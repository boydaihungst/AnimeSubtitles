Dialogue: 0,0:00:19.35,0:00:22.48,Default,,0,0,0,,DỰA TRÊN TRUYỆN TRANH BỞI YUKIMURA MAKOTO
Dialogue: 0,0:02:14.51,0:02:17.35,Default,,0,0,0,,{\i1}Lão già này cũng điếc nốt à?{\i0}
Dialogue: 0,0:02:26.02,0:02:27.69,Default,,0,0,0,,Vệ binh, không được cử động.
Dialogue: 0,0:02:31.11,0:02:34.20,Default,,0,0,0,,Nhà vua đang trong tầm gươm của ta.
Dialogue: 0,0:02:38.49,0:02:40.62,Default,,0,0,0,,- Thật à?\N- Không thể nào.
Dialogue: 0,0:02:53.30,0:02:54.63,Default,,0,0,0,,Askeladd.
Dialogue: 0,0:02:55.84,0:02:58.89,Default,,0,0,0,,- Tên khốn! Vua Sweyn đang…\N- Thorkell, đừng manh động!
Dialogue: 0,0:02:58.97,0:03:02.35,Default,,0,0,0,,Thần trí của Askeladd đang không ổn.\NĐừng kích động hắn.
Dialogue: 0,0:03:02.43,0:03:04.52,Default,,0,0,0,,Như thế nhà vua sẽ gặp nguy hiểm.
Dialogue: 0,0:03:12.73,0:03:14.19,Default,,0,0,0,,Hạ gươm xuống.
Dialogue: 0,0:03:14.28,0:03:17.16,Default,,0,0,0,,Rồi ta sẽ tha cho\Nsự xấc xược này của ngươi.
Dialogue: 0,0:03:17.24,0:03:21.28,Default,,0,0,0,,Tha? Đừng có lên mặt với ta, tên mọi rợ.
Dialogue: 0,0:03:21.83,0:03:24.08,Default,,0,0,0,,Ngươi xứng đáng được chết vì đã nhạo báng
Dialogue: 0,0:03:24.95,0:03:26.58,Default,,0,0,0,,gia đình và người của ta.
Dialogue: 0,0:03:27.37,0:03:29.17,Default,,0,0,0,,Đây là lời cảnh cáo cuối cùng.
Dialogue: 0,0:03:29.88,0:03:33.09,Default,,0,0,0,,Bỏ gươm xuống, Askeladd.
Dialogue: 0,0:03:33.67,0:03:35.47,Default,,0,0,0,,Đấy là biệt danh của ta.
Dialogue: 0,0:03:36.34,0:03:40.05,Default,,0,0,0,,Ta sẽ cho ngươi biết\Ntên thật do chính mẹ ta đặt.
Dialogue: 0,0:03:41.89,0:03:44.77,Default,,0,0,0,,Lucius Artorius Castus.
Dialogue: 0,0:03:45.52,0:03:47.06,Default,,0,0,0,,Ta chính là
Dialogue: 0,0:03:47.14,0:03:50.31,Default,,0,0,0,,người kế vị hợp pháp để trị vì
Dialogue: 0,0:03:50.40,0:03:51.69,Default,,0,0,0,,xứ Anh thuộc La Mã.
Dialogue: 0,0:04:09.08,0:04:10.58,Default,,0,0,0,,{\i1}Thật sảng khoái.{\i0}
Dialogue: 0,0:04:34.52,0:04:36.73,Default,,0,0,0,,{\i1}Từng có lúc, lực lượng của Đan Mạch{\i0}
Dialogue: 0,0:04:36.82,0:04:40.15,Default,,0,0,0,,{\i1}đã chiếm quyền bá chủ ở Anh.{\i0}
Dialogue: 0,0:04:40.24,0:04:41.99,Default,,0,0,0,,{\i1}Nhưng vào năm 1014,{\i0}
Dialogue: 0,0:04:42.07,0:04:44.70,Default,,0,0,0,,{\i1}với cái chết của vua Sweyn của Đan Mạch,{\i0}
Dialogue: 0,0:04:44.78,0:04:47.54,Default,,0,0,0,,{\i1}tình hình đã thay đổi một cách đáng kể.{\i0}
Dialogue: 0,0:04:52.54,0:04:54.38,Default,,0,0,0,,{\i1}Đan Mạch và Anh{\i0}
Dialogue: 0,0:04:54.46,0:04:58.09,Default,,0,0,0,,{\i1}lại một lần nữa rơi vào tranh chấp.{\i0}
Dialogue: 0,0:04:59.17,0:05:01.59,Default,,0,0,0,,{\i1}Canute, đứng đầu tiền tuyến nước Anh{\i0}
Dialogue: 0,0:05:01.68,0:05:06.26,Default,,0,0,0,,{\i1}của người Viking Đan Mạch,{\i0}\N{\i1}đã nối ngôi cha của mình.{\i0}
Dialogue: 0,0:05:07.43,0:05:09.10,Default,,0,0,0,,{\i1}Ethelred Đệ Nhị, người vừa trở về{\i0}
Dialogue: 0,0:05:09.18,0:05:11.77,Default,,0,0,0,,{\i1}sau khi bị đày đến xứ Normandy{\i0}
Dialogue: 0,0:05:11.85,0:05:14.65,Default,,0,0,0,,{\i1}và lấy lại quyền lực{\i0}\N{\i1}sau cái chết của vua Sweyn.{\i0}
Dialogue: 0,0:05:15.69,0:05:19.99,Default,,0,0,0,,{\i1}Khi hai bên{\i0}\N{\i1}tranh giành ngôi vua của nước Anh,{\i0}
Dialogue: 0,0:05:20.07,0:05:21.49,Default,,0,0,0,,{\i1}ngai vàng lại không biết{\i0}
Dialogue: 0,0:05:21.57,0:05:24.07,Default,,0,0,0,,{\i1}sẽ rơi vào tay kẻ nào.{\i0}
Dialogue: 0,0:05:24.70,0:05:29.95,Default,,0,0,0,,{\i1}Sự tàn phá của chiến tranh{\i0}\N{\i1}đã đẩy nước Anh vào cảnh nghèo khó.{\i0}
Dialogue: 0,0:05:37.92,0:05:40.05,Default,,0,0,0,,Xin bệ hạ hãy lùi lại!
Dialogue: 0,0:05:40.13,0:05:43.09,Default,,0,0,0,,Đừng lo. Ta vẫn chưa uống.
Dialogue: 0,0:05:43.93,0:05:45.34,Default,,0,0,0,,Xin bệ hạ nhân từ!
Dialogue: 0,0:05:45.93,0:05:47.56,Default,,0,0,0,,Nhân danh Chúa,
Dialogue: 0,0:05:47.64,0:05:49.64,Default,,0,0,0,,thần thề là thần không biết!
Dialogue: 0,0:05:49.72,0:05:51.64,Default,,0,0,0,,Thần sẽ không hạ độc đồ uống của bệ hạ!
Dialogue: 0,0:05:52.27,0:05:54.06,Default,,0,0,0,,Xin bệ hạ nhân từ!
Dialogue: 0,0:05:54.15,0:05:55.81,Default,,0,0,0,,Đức vua Ethelred!
Dialogue: 0,0:05:56.73,0:05:58.15,Default,,0,0,0,,Khốn kiếp.
Dialogue: 0,0:05:59.86,0:06:01.74,Default,,0,0,0,,{\i1}Dám dùng mấy trò hèn hạ.{\i0}
Dialogue: 0,0:06:27.39,0:06:29.31,Default,,0,0,0,,Trời ạ,
Dialogue: 0,0:06:29.39,0:06:32.52,Default,,0,0,0,,thế này còn tệ hơn tôi tưởng nhiều,
Dialogue: 0,0:06:32.60,0:06:34.31,Default,,0,0,0,,thưa bệ hạ.
Dialogue: 0,0:06:35.02,0:06:37.81,Default,,0,0,0,,Không ngờ Mercia,\Nmột nơi từng được biết đến như
Dialogue: 0,0:06:37.90,0:06:40.11,Default,,0,0,0,,"viên ngọc của vùng trung du"\Nlại như bây giờ.
Dialogue: 0,0:06:40.19,0:06:43.24,Default,,0,0,0,,Sẽ mất kha khá thời gian để họ phục hồi.
Dialogue: 0,0:06:44.78,0:06:47.82,Default,,0,0,0,,Gunnar, đừng nói\Nnhư thể ngươi không có liên can.
Dialogue: 0,0:06:48.45,0:06:50.24,Default,,0,0,0,,Chính chúng ta đã hủy hoại nó.
Dialogue: 0,0:06:53.04,0:06:54.04,Default,,0,0,0,,Gì thế kia?
Dialogue: 0,0:06:56.79,0:06:59.92,Default,,0,0,0,,À vâng, kia là
Dialogue: 0,0:07:00.00,0:07:03.46,Default,,0,0,0,,đội tiên phong của quân ta,\Nnhững người đã giành kiểm soát nơi đây.
Dialogue: 0,0:07:03.55,0:07:05.55,Default,,0,0,0,,- Thả ta ra!\N- Ta không hỏi chuyện đấy.
Dialogue: 0,0:07:05.63,0:07:07.72,Default,,0,0,0,,Ta hỏi chuyện chúng đang làm.
Dialogue: 0,0:07:08.64,0:07:11.31,Default,,0,0,0,,Tất nhiên là chúng đang cướp bóc rồi.
Dialogue: 0,0:07:11.39,0:07:13.31,Default,,0,0,0,,Chúng đang lựa ra những cô gái được giá
Dialogue: 0,0:07:13.39,0:07:14.93,Default,,0,0,0,,trong đám ăn mày.
Dialogue: 0,0:07:15.89,0:07:17.27,Default,,0,0,0,,Ta đã cấm rồi mà?
Dialogue: 0,0:07:18.15,0:07:20.57,Default,,0,0,0,,Mau chém đầu chúng và treo dọc đường.
Dialogue: 0,0:07:20.65,0:07:24.03,Default,,0,0,0,,Cái gì? Tuy nhiên,
Dialogue: 0,0:07:24.11,0:07:27.24,Default,,0,0,0,,thu thập chiến lợi phẩm\Nlà chuyện cần thiết trong chiến tranh.
Dialogue: 0,0:07:27.32,0:07:29.82,Default,,0,0,0,,Ta không nên hạn chế bọn họ…
Dialogue: 0,0:07:29.91,0:07:33.04,Default,,0,0,0,,Ta không cần quân lính\Nxem thường kỉ luật quân đội.
Dialogue: 0,0:07:33.12,0:07:35.79,Default,,0,0,0,,Mau chém đầu chúng và treo dọc đường.
Dialogue: 0,0:07:36.41,0:07:39.83,Default,,0,0,0,,Vâng. Thế thì…
Dialogue: 0,0:07:39.92,0:07:43.00,Default,,0,0,0,,- Tên kia!\N- Cái gì? Thật à?
Dialogue: 0,0:07:58.60,0:08:00.06,Default,,0,0,0,,Cảm ơn ngài đã dành thời gian
Dialogue: 0,0:08:00.15,0:08:02.69,Default,,0,0,0,,để đến tận đây, thưa bệ hạ.
Dialogue: 0,0:08:03.57,0:08:05.82,Default,,0,0,0,,Floki, chuẩn bị đến đâu rồi?
Dialogue: 0,0:08:06.40,0:08:08.95,Default,,0,0,0,,Rất tốt ạ.\NChúng thần sẵn sàng bất cứ lúc nào.
Dialogue: 0,0:08:09.03,0:08:11.70,Default,,0,0,0,,Thần đã cho họ chờ sẵn rồi.
Dialogue: 0,0:08:12.91,0:08:16.62,Default,,0,0,0,,Tuy nhiên, vẫn không có lí do để bệ hạ\Nđích thân đi gặp hắn.
Dialogue: 0,0:08:16.70,0:08:18.58,Default,,0,0,0,,Bệ hạ có thể để cho chúng thần…
Dialogue: 0,0:08:18.66,0:08:22.21,Default,,0,0,0,,Không sao. Dù sao ta cũng định\Nđến đây để kiểm tra tình hình.
Dialogue: 0,0:08:22.29,0:08:23.21,Default,,0,0,0,,Ta sẽ gặp hắn.
Dialogue: 0,0:08:23.79,0:08:26.63,Default,,0,0,0,,Eadric, Bá tước xứ Mercia,\Nchỉ là một tên hèn.
Dialogue: 0,0:08:26.71,0:08:29.09,Default,,0,0,0,,Không đáng để gặp hắn.
Dialogue: 0,0:08:29.59,0:08:32.93,Default,,0,0,0,,Tính cách và sự hữu dụng của hắn\Nlà hai chuyện khác nhau.
Dialogue: 0,0:08:33.01,0:08:35.10,Default,,0,0,0,,Ta sẽ quyết định khi gặp hắn.
Dialogue: 0,0:08:37.10,0:08:40.48,Default,,0,0,0,,Hơn nữa, còn có một lí do khác cho việc
Dialogue: 0,0:08:40.56,0:08:42.61,Default,,0,0,0,,ta đi đến tận nơi này.
Dialogue: 0,0:08:43.48,0:08:45.36,Default,,0,0,0,,Là gì thế ạ?
Dialogue: 0,0:08:46.36,0:08:49.24,Default,,0,0,0,,Này!
Dialogue: 0,0:08:49.32,0:08:53.24,Default,,0,0,0,,Canute!
Dialogue: 0,0:08:53.32,0:08:56.49,Default,,0,0,0,,Ngươi đây rồi, tên khốn kiếp!
Dialogue: 0,0:08:56.58,0:09:00.25,Default,,0,0,0,,Canute!
Dialogue: 0,0:09:01.17,0:09:03.29,Default,,0,0,0,,Ta phải trấn tĩnh thứ kia lại.
Dialogue: 0,0:09:03.38,0:09:05.71,Default,,0,0,0,,Ta không nghĩ các ngươi có thể làm được.
Dialogue: 0,0:09:05.80,0:09:08.05,Default,,0,0,0,,Đúng thế.
Dialogue: 0,0:09:18.77,0:09:21.60,Default,,0,0,0,,Tên nhãi ranh!
Dialogue: 0,0:09:21.69,0:09:24.02,Default,,0,0,0,,Đưa mặt đây ta đấm! Đầu tiên,
Dialogue: 0,0:09:24.11,0:09:27.36,Default,,0,0,0,,cứ câm mồm lại và để ta đấm ngươi!
Dialogue: 0,0:09:28.23,0:09:29.99,Default,,0,0,0,,Bình tĩnh, Thorkell.
Dialogue: 0,0:09:30.07,0:09:33.49,Default,,0,0,0,,Này, tên nhãi…
Dialogue: 0,0:09:34.24,0:09:37.79,Default,,0,0,0,,Ta ghét bị dừng lại giữa trận chiến
Dialogue: 0,0:09:37.87,0:09:41.71,Default,,0,0,0,,còn hơn ta ghét lũ ếch nữa!
Dialogue: 0,0:09:42.29,0:09:44.13,Default,,0,0,0,,Hả? Ếch?
Dialogue: 0,0:09:45.29,0:09:48.09,Default,,0,0,0,,Mercia đã yêu cầu đình chiến.
Dialogue: 0,0:09:49.09,0:09:51.59,Default,,0,0,0,,Kết cục của trận chiến này đã rõ.
Dialogue: 0,0:09:52.17,0:09:53.97,Default,,0,0,0,,Làm tốt lắm, Thorkell.
Dialogue: 0,0:09:54.05,0:09:55.97,Default,,0,0,0,,Câm mồm đi!
Dialogue: 0,0:09:56.89,0:09:58.97,Default,,0,0,0,,Một khi một trận chiến đã bắt đầu,
Dialogue: 0,0:09:59.06,0:10:03.19,Default,,0,0,0,,nó sẽ không kết thúc\Nđến khi giết được thủ lĩnh của kẻ thù.
Dialogue: 0,0:10:03.27,0:10:07.73,Default,,0,0,0,,Suýt chút nữa\Nlà ta chặt được đầu của Eadric!
Dialogue: 0,0:10:08.32,0:10:11.61,Default,,0,0,0,,Thôi lải nhải đi.\NBá tước Eadric xứ Mercia chỉ là
Dialogue: 0,0:10:11.69,0:10:13.78,Default,,0,0,0,,lãnh chúa của một vùng hẻo lánh.
Dialogue: 0,0:10:13.86,0:10:15.99,Default,,0,0,0,,Hãy nhìn xa ra đi.
Dialogue: 0,0:10:16.07,0:10:19.62,Default,,0,0,0,,Ta cóc quan tâm chuyện đấy!
Dialogue: 0,0:10:19.70,0:10:23.50,Default,,0,0,0,,Ta chỉ muốn sống một cuộc sống\Nlấy chiến tranh làm tâm.
Dialogue: 0,0:10:24.08,0:10:25.42,Default,,0,0,0,,Ở phía Đông,
Dialogue: 0,0:10:25.50,0:10:29.38,Default,,0,0,0,,con của Ethelred, Edmund,\Nđang có vài động thái đáng ngờ.
Dialogue: 0,0:10:30.05,0:10:33.38,Default,,0,0,0,,Rất mong ngài\Ngiúp trấn áp mặt trận phía Đông.
Dialogue: 0,0:10:33.47,0:10:34.80,Default,,0,0,0,,Kĩ năng xuất…
Dialogue: 0,0:10:34.88,0:10:38.72,Default,,0,0,0,,Ta sẽ tự mình chọn địa điểm và đối thủ!
Dialogue: 0,0:10:38.80,0:10:40.35,Default,,0,0,0,,Cái tên đầu vuông!
Dialogue: 0,0:10:41.72,0:10:42.77,Default,,0,0,0,,Canute!
Dialogue: 0,0:10:43.56,0:10:45.94,Default,,0,0,0,,Tốt nhất là ngươi không nên quên
Dialogue: 0,0:10:46.02,0:10:48.52,Default,,0,0,0,,lần đấy khi ta bảo ngươi,
Dialogue: 0,0:10:49.86,0:10:51.98,Default,,0,0,0,,{\i1}"Từ giờ, ta sẽ chứng kiến{\i0}
Dialogue: 0,0:10:52.07,0:10:54.03,Default,,0,0,0,,{\i1}những gì ngươi đạt được{\i0}
Dialogue: 0,0:10:54.11,0:10:57.11,Default,,0,0,0,,{\i1}và người mà ngươi sẽ trở thành."{\i0}
Dialogue: 0,0:10:58.49,0:11:01.33,Default,,0,0,0,,Ngươi vẫn chưa là ai cả.
Dialogue: 0,0:11:01.41,0:11:03.79,Default,,0,0,0,,Thậm chí ngươi còn chưa phải vua nước Anh.
Dialogue: 0,0:11:04.37,0:11:06.46,Default,,0,0,0,,Ngươi chỉ là một tên nhãi.
Dialogue: 0,0:11:07.04,0:11:08.92,Default,,0,0,0,,Nghe đây, tên nhóc…
Dialogue: 0,0:11:09.00,0:11:13.26,Default,,0,0,0,,Ngươi không thể cứ trốn tránh chiến tranh.
Dialogue: 0,0:11:13.34,0:11:16.68,Default,,0,0,0,,Ngươi chỉ có lựa chọn\Nđi trên một con đường đầy máu và sắt,
Dialogue: 0,0:11:17.84,0:11:20.18,Default,,0,0,0,,hệt như con đường của Askeladd.
Dialogue: 0,0:11:20.26,0:11:22.18,Default,,0,0,0,,Ngươi hãy nhớ lấy.
Dialogue: 0,0:11:22.26,0:11:24.48,Default,,0,0,0,,Ngay từ giây phút bắt đầu,
Dialogue: 0,0:11:24.56,0:11:26.52,Default,,0,0,0,,con đường ngươi đi đã trải đầy máu.
Dialogue: 0,0:11:28.90,0:11:30.31,Default,,0,0,0,,Đừng bám lấy ta nữa!
Dialogue: 0,0:11:30.40,0:11:32.82,Default,,0,0,0,,Đủ rồi! Cút đi!
Dialogue: 0,0:11:34.49,0:11:35.53,Default,,0,0,0,,Thật là khó chịu!
Dialogue: 0,0:11:36.11,0:11:38.61,Default,,0,0,0,,Hôm nay, ta sẽ tha cho ngươi.
Dialogue: 0,0:11:38.70,0:11:41.62,Default,,0,0,0,,Nhưng sẽ không có lần sau đâu.\NĐừng quên điều đấy.
Dialogue: 0,0:11:43.66,0:11:46.71,Default,,0,0,0,,Sao hắn có thể\Nnhục mạ bệ hạ trước mặt binh sĩ?
Dialogue: 0,0:11:46.79,0:11:49.29,Default,,0,0,0,,Bệ hạ, hắn đã đi quá xa rồi!
Dialogue: 0,0:11:49.38,0:11:51.46,Default,,0,0,0,,Bệ hạ không thể bỏ qua chuyện này được!
Dialogue: 0,0:11:52.38,0:11:55.01,Default,,0,0,0,,Tại sao? Hắn nói có lí.
Dialogue: 0,0:11:55.09,0:11:56.72,Default,,0,0,0,,Đấy là một lời cảnh tỉnh.
Dialogue: 0,0:11:58.01,0:11:59.93,Default,,0,0,0,,Hắn không có gì phải giấu.
Dialogue: 0,0:12:00.72,0:12:03.35,Default,,0,0,0,,Có thể sống như hắn chắc phải tuyệt lắm.
Dialogue: 0,0:12:07.06,0:12:07.94,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:12:31.29,0:12:33.84,Default,,0,0,0,,Nhiêu đây đáng giá 1,814 cân bạc.
Dialogue: 0,0:12:33.92,0:12:37.34,Default,,0,0,0,,Hiện tại, chúng tôi\Nchỉ có thể thu thập bấy nhiêu.
Dialogue: 0,0:12:38.42,0:12:40.22,Default,,0,0,0,,Xin ngài hãy đồng ý.
Dialogue: 0,0:12:45.01,0:12:48.73,Default,,0,0,0,,Nếu ngài rút quân ra khỏi Mercia,
Dialogue: 0,0:12:48.81,0:12:51.77,Default,,0,0,0,,chúng tôi sẽ cống thêm 1,814 cân nữa.
Dialogue: 0,0:12:51.85,0:12:55.19,Default,,0,0,0,,Thỏa thuận không tệ đâu, ngài Canute.
Dialogue: 0,0:12:56.28,0:12:58.40,Default,,0,0,0,,Hóa ra đây là thuế Danegeld?
Dialogue: 0,0:12:59.28,0:13:00.61,Default,,0,0,0,,Ngài Eadric…
Dialogue: 0,0:13:04.74,0:13:08.62,Default,,0,0,0,,Ý ngài thế nào, ngài Canute?
Dialogue: 0,0:13:23.64,0:13:24.89,Default,,0,0,0,,Thật rẻ rúng.
Dialogue: 0,0:13:38.28,0:13:41.40,Default,,0,0,0,,Được rồi, cứ thế mà nâng lên.
Dialogue: 0,0:14:29.33,0:14:30.83,Default,,0,0,0,,Ta hỏi ngươi một lần nữa.
Dialogue: 0,0:14:32.29,0:14:34.46,Default,,0,0,0,,Ý ngươi là ngươi sẽ trả
Dialogue: 0,0:14:34.54,0:14:38.54,Default,,0,0,0,,số vàng bạc này\Nđể ta rút quân khỏi Mercia sao,
Dialogue: 0,0:14:39.09,0:14:40.38,Default,,0,0,0,,Eadric?
Dialogue: 0,0:14:40.88,0:14:43.34,Default,,0,0,0,,Là 3.628 cân đấy!
Dialogue: 0,0:14:43.42,0:14:46.30,Default,,0,0,0,,Nhiêu đây là quá đủ\Ncho một món tiền bồi thường.
Dialogue: 0,0:14:48.76,0:14:49.64,Default,,0,0,0,,Chưa đủ.
Dialogue: 0,0:14:50.93,0:14:53.93,Default,,0,0,0,,Hãy nghĩ về những lời ngươi đã nói.
Dialogue: 0,0:14:54.48,0:14:55.81,Default,,0,0,0,,Ý của ngươi là muốn
Dialogue: 0,0:14:55.90,0:14:58.44,Default,,0,0,0,,Canute ta, người trị vì nước Anh,
Dialogue: 0,0:14:59.02,0:15:02.61,Default,,0,0,0,,vì tiền mà rút quân\Nkhỏi lãnh thổ của ngươi.
Dialogue: 0,0:15:03.53,0:15:05.99,Default,,0,0,0,,Và cái giá ngươi trả\Ncho việc bất kính với đức vua
Dialogue: 0,0:15:06.07,0:15:07.70,Default,,0,0,0,,chỉ có bấy nhiêu thôi?
Dialogue: 0,0:15:11.29,0:15:13.50,Default,,0,0,0,,Ta là vua của ngươi.
Dialogue: 0,0:15:14.41,0:15:16.67,Default,,0,0,0,,Ta đến là để đàn áp một cuộc nổi dậy
Dialogue: 0,0:15:16.75,0:15:18.67,Default,,0,0,0,,xảy ra trên lãnh thổ của mình.
Dialogue: 0,0:15:19.92,0:15:21.80,Default,,0,0,0,,Chứ không phải là để xin tiền.
Dialogue: 0,0:15:25.30,0:15:26.34,Default,,0,0,0,,Thật nhảm nhỉ!
Dialogue: 0,0:15:26.88,0:15:31.26,Default,,0,0,0,,Người trị vì của bọn ta không ai khác\Nngoài vua Ethelred của hoàng tộc Wessex!
Dialogue: 0,0:15:31.35,0:15:32.47,Default,,0,0,0,,Không phải ngươi!
Dialogue: 0,0:15:32.56,0:15:33.97,Default,,0,0,0,,Đừng nói nữa!
Dialogue: 0,0:15:34.06,0:15:36.39,Default,,0,0,0,,- Nhưng thưa bố…\N- Không!
Dialogue: 0,0:15:36.48,0:15:38.65,Default,,0,0,0,,Giờ không phải là lúc!
Dialogue: 0,0:15:38.73,0:15:40.56,Default,,0,0,0,,Ngươi nhắc ta mới nhớ,
Dialogue: 0,0:15:40.65,0:15:43.94,Default,,0,0,0,,có một kẻ nữa tự xưng là vua nước Anh.
Dialogue: 0,0:15:45.65,0:15:46.78,Default,,0,0,0,,Thế nào?
Dialogue: 0,0:15:46.86,0:15:50.62,Default,,0,0,0,,Ethelred có cho phép ngươi\Nlập ra thỏa thuận này không?
Dialogue: 0,0:15:52.91,0:15:54.54,Default,,0,0,0,,Nếu biết tình thế ở đây,
Dialogue: 0,0:15:54.62,0:15:57.25,Default,,0,0,0,,bệ hạ chắc chắn sẽ hiểu.
Dialogue: 0,0:15:58.46,0:16:01.25,Default,,0,0,0,,Thật sao? Đúng là tốt bụng.
Dialogue: 0,0:16:02.17,0:16:04.63,Default,,0,0,0,,Kể cả khi thần dân của hắn bỏ tiền tuyến
Dialogue: 0,0:16:04.71,0:16:07.59,Default,,0,0,0,,mà chưa được cho phép,\Nvì lợi ích của lãnh thổ riêng,
Dialogue: 0,0:16:07.68,0:16:09.59,Default,,0,0,0,,Ethelred sẽ tha thứ sao?
Dialogue: 0,0:16:12.55,0:16:14.26,Default,,0,0,0,,Ngài ấy xấu tính thật.
Dialogue: 0,0:16:14.35,0:16:16.39,Default,,0,0,0,,Thật tàn nhẫn.
Dialogue: 0,0:16:18.56,0:16:21.48,Default,,0,0,0,,Đang có hai vua\Nnên sẽ không có lệnh gì cả.
Dialogue: 0,0:16:23.86,0:16:27.40,Default,,0,0,0,,Một trong hai phải chết.
Dialogue: 0,0:16:29.07,0:16:33.03,Default,,0,0,0,,Ethelred là một tên hèn đã chọn\Nruồng bỏ con dân và ngai vàng của mình
Dialogue: 0,0:16:33.12,0:16:36.54,Default,,0,0,0,,và chịu cảnh đi đày\Ntrong trận chiến trước.
Dialogue: 0,0:16:37.20,0:16:39.00,Default,,0,0,0,,Giao tương lai của nước Anh
Dialogue: 0,0:16:39.08,0:16:41.46,Default,,0,0,0,,vào tay của một người như thế\Nthật ngu xuẩn,
Dialogue: 0,0:16:41.54,0:16:43.13,Default,,0,0,0,,ngươi có nghĩ thế không?
Dialogue: 0,0:16:45.67,0:16:47.84,Default,,0,0,0,,Ngươi đang bảo ta
Dialogue: 0,0:16:47.92,0:16:49.43,Default,,0,0,0,,phản bội bệ hạ?
Dialogue: 0,0:16:53.64,0:16:55.43,Default,,0,0,0,,Ngươi đã phản bội hắn rồi.
Dialogue: 0,0:16:58.48,0:17:01.94,Default,,0,0,0,,Ta cần ngươi giúp, Eadric.
Dialogue: 0,0:17:06.86,0:17:10.03,Default,,0,0,0,,Ta muốn giải quyết Ethelred.
Dialogue: 0,0:17:13.41,0:17:17.08,Default,,0,0,0,,Là một người\Nđã phục vụ hắn trong nhiều năm,
Dialogue: 0,0:17:17.16,0:17:18.95,Default,,0,0,0,,chắc ngươi phải có cách hay.
Dialogue: 0,0:17:22.00,0:17:23.46,Default,,0,0,0,,Ngươi nghĩ
Dialogue: 0,0:17:23.54,0:17:26.88,Default,,0,0,0,,ngươi có thể\Nlấy đi chút trung thành cuối cùng của ta?
Dialogue: 0,0:17:26.96,0:17:28.30,Default,,0,0,0,,Tên nhãi ranh!
Dialogue: 0,0:17:29.09,0:17:31.51,Default,,0,0,0,,Đổi lại, ta sẽ không chiếm Mercia.
Dialogue: 0,0:17:32.09,0:17:34.05,Default,,0,0,0,,Cái giá sẽ là thủ cấp của Ethelred.
Dialogue: 0,0:17:34.80,0:17:36.72,Default,,0,0,0,,Thỏa thuận không tệ đâu.
Dialogue: 0,0:17:38.06,0:17:39.56,Default,,0,0,0,,Ta từ chối!
Dialogue: 0,0:17:39.64,0:17:42.27,Default,,0,0,0,,Cuộc đàm phán này đã thất bại.
Dialogue: 0,0:17:42.35,0:17:46.23,Default,,0,0,0,,Ta sẽ chiến đấu với ngươi đến cùng,\Ntên cặn bã!
Dialogue: 0,0:17:51.99,0:17:56.20,Default,,0,0,0,,Floki, có vẻ tên này\Nkhông hèn nhát chút nào.
Dialogue: 0,0:17:56.28,0:17:57.83,Default,,0,0,0,,Hắn khá cứng cỏi đấy.
Dialogue: 0,0:17:58.33,0:17:59.91,Default,,0,0,0,,Thế thì…
Dialogue: 0,0:18:00.41,0:18:03.96,Default,,0,0,0,,Sao ta không thử xem, thưa bệ hạ?
Dialogue: 0,0:18:07.84,0:18:09.51,Default,,0,0,0,,Ta ra ngoài thôi, ngài Eadric.
Dialogue: 0,0:18:10.42,0:18:12.59,Default,,0,0,0,,Ta có chuyện này muốn cho ngài xem.
Dialogue: 0,0:18:58.80,0:19:01.56,Default,,0,0,0,,- Sẵn sàng chưa?\N- Rồi, thưa bệ hạ!
Dialogue: 0,0:19:03.77,0:19:04.64,Default,,0,0,0,,Làm đi.
Dialogue: 0,0:19:18.74,0:19:22.45,Default,,0,0,0,,Lửa hiệu? Lửa hiệu cho cái gì?
Dialogue: 0,0:19:25.79,0:19:28.83,Default,,0,0,0,,Cái gì thế này?
Dialogue: 0,0:19:31.59,0:19:35.26,Default,,0,0,0,,Chuyện này là thế nào? Canute!
Dialogue: 0,0:19:49.52,0:19:50.73,Default,,0,0,0,,Bố!
Dialogue: 0,0:19:53.94,0:19:54.90,Default,,0,0,0,,Nhìn kìa.
Dialogue: 0,0:20:08.21,0:20:09.25,Default,,0,0,0,,Bên kia nữa!
Dialogue: 0,0:20:14.80,0:20:15.67,Default,,0,0,0,,Canute!
Dialogue: 0,0:20:16.67,0:20:18.97,Default,,0,0,0,,Lửa hiệu này là cho việc gì?
Dialogue: 0,0:20:23.06,0:20:25.93,Default,,0,0,0,,Đây là kết cục khi đối đầu với ta.
Dialogue: 0,0:20:28.06,0:20:30.60,Default,,0,0,0,,Hãy tưởng tượng đi, Eadric.
Dialogue: 0,0:20:31.98,0:20:33.19,Default,,0,0,0,,Ở ngay thời điểm này,
Dialogue: 0,0:20:34.52,0:20:36.99,Default,,0,0,0,,Mercia đã trở thành cát bụi.
Dialogue: 0,0:20:52.38,0:20:53.92,Default,,0,0,0,,Ngươi đã hiểu chưa?
Dialogue: 0,0:20:54.63,0:20:56.59,Default,,0,0,0,,Nếu muốn,
Dialogue: 0,0:20:56.67,0:21:00.30,Default,,0,0,0,,ta có thể đốt trụi tất cả các ngươi.
Dialogue: 0,0:21:07.68,0:21:08.73,Default,,0,0,0,,Bố!
Dialogue: 0,0:21:15.94,0:21:19.28,Default,,0,0,0,,Hãy chuẩn bị thủ cấp của Ethelred\Nđể mua hòa bình đi.
Dialogue: 0,0:21:20.20,0:21:21.61,Default,,0,0,0,,Đấy là lựa chọn khôn ngoan.
Dialogue: 0,0:21:49.02,0:21:53.19,Default,,0,0,0,,{\i1}Năm tiếp theo đấy, vào tháng Tư năm 1016,{\i0}
Dialogue: 0,0:21:53.27,0:21:57.73,Default,,0,0,0,,{\i1}vua Ethelred Đệ Nhị của nước Anh đã chết.{\i0}
Dialogue: 0,0:22:05.49,0:22:06.45,Default,,0,0,0,,Bệ hạ!
Dialogue: 0,0:22:08.70,0:22:10.58,Default,,0,0,0,,{\i1}Người ta nói là do một căn bệnh.{\i0}
Dialogue: 0,0:22:19.71,0:22:21.55,Default,,0,0,0,,{\i1}Sau cái chết của Ethelred,{\i0}
Dialogue: 0,0:22:21.63,0:22:24.89,Default,,0,0,0,,{\i1}con trai ông, Edmund, thừa kế ngai vàng.{\i0}
Dialogue: 0,0:22:25.55,0:22:28.39,Default,,0,0,0,,{\i1}Edmund nối ngôi Ethelred{\i0}
Dialogue: 0,0:22:28.47,0:22:31.89,Default,,0,0,0,,{\i1}và chống lại quân đội của Canute,{\i0}\N{\i1}gây ra nhiều tổn thất lớn.{\i0}
Dialogue: 0,0:22:37.31,0:22:40.48,Default,,0,0,0,,{\i1}Nhưng bảy tháng sau,{\i0}\N{\i1}vào tháng 11 cùng năm,{\i0}
Dialogue: 0,0:22:40.57,0:22:43.36,Default,,0,0,0,,{\i1}ông ấy cũng qua đời vì một căn bệnh.{\i0}
Dialogue: 0,0:22:56.50,0:22:58.17,Default,,0,0,0,,Một căn bệnh à?
Dialogue: 0,0:22:58.96,0:23:02.05,Default,,0,0,0,,Ngay cả vua Sweyn\Nđã mất mười năm để giành đất nước này,
Dialogue: 0,0:23:02.71,0:23:05.05,Default,,0,0,0,,nhưng tất cả\Nđã được lo liệu chỉ trong ba năm.
Dialogue: 0,0:23:06.13,0:23:07.84,Default,,0,0,0,,Hội đồng
Dialogue: 0,0:23:07.93,0:23:11.47,Default,,0,0,0,,đã công nhận Canute\Nlà người trị vì nước Anh.
Dialogue: 0,0:23:12.18,0:23:14.68,Default,,0,0,0,,Lễ đăng quang của ngài ấy\Nsẽ diễn ra vào năm sau.
Dialogue: 0,0:23:19.98,0:23:23.90,Default,,0,0,0,,Đừng nói về Canute nữa.\NLàm ta mất hứng ăn rồi.
Dialogue: 0,0:23:28.57,0:23:29.45,Default,,0,0,0,,Ừ, phải.
Dialogue: 0,0:23:45.01,0:23:46.09,Default,,0,0,0,,{\i1}Sweyn,{\i0}
Dialogue: 0,0:23:47.38,0:23:48.39,Default,,0,0,0,,{\i1}Ethelred,{\i0}
Dialogue: 0,0:23:49.64,0:23:50.64,Default,,0,0,0,,{\i1}Edmund…{\i0}
Dialogue: 0,0:23:52.31,0:23:55.10,Default,,0,0,0,,{\i1}Sau những cái chết bất thường của kẻ thù,{\i0}
Dialogue: 0,0:23:55.18,0:23:57.94,Default,,0,0,0,,{\i1}năm 1018, Canute…{\i0}
Dialogue: 0,0:23:58.69,0:24:01.82,Default,,0,0,0,,{\i1}chính thức trở thành vua nước Anh.{\i0}
Dialogue: 0,0:25:54.01,0:25:55.30,Default,,0,0,0,,{\an8\i1}"Tôi muốn một con ngựa".{\i0}
