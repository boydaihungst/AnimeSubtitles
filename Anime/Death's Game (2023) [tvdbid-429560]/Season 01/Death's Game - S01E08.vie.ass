Dialogue: 0,0:00:02.03,0:00:05.10,Default,,0,0,0,,TRÒ CHƠI TỬ THẦN
Dialogue: 0,0:00:05.12,0:00:10.01,Default,,0,0,0,,ĐỪNG TÌM TỰ TÌM ĐẾN CÁI CHẾT\NCÁI CHẾT SẼ TÌM ĐẾN BẠN
Dialogue: 0,0:00:05.13,0:00:10.02,Default,,0,0,0,,{\an8}TẬP 8
Dialogue: 0,0:00:29.44,0:00:30.44,Default,,0,0,0,,Mẹ?
Dialogue: 0,0:00:47.00,0:00:48.25,Default,,0,0,0,,Cái này không đúng.
Dialogue: 0,0:01:03.48,0:01:04.48,Default,,0,0,0,,Không.
Dialogue: 0,0:01:05.48,0:01:06.31,Default,,0,0,0,,Không.
Dialogue: 0,0:01:06.40,0:01:07.27,Default,,0,0,0,,Đừng mà.
Dialogue: 0,0:01:07.35,0:01:08.35,Default,,0,0,0,,Không!
Dialogue: 0,0:01:14.86,0:01:19.83,Default,,0,0,0,,{\i1}Tôi đã từng nghĩ là tôi biết\Nrất rõ về mẹ.{\i0}
Dialogue: 0,0:01:20.70,0:01:25.04,Default,,0,0,0,,{\i1}Nhưng thật ra tôi chẳng biết gì cả.{\i0}
Dialogue: 0,0:01:28.71,0:01:30.88,Default,,0,0,0,,{\i1}Mẹ đã từng là thiếu nữ mộng mơ.{\i0}
Dialogue: 0,0:01:32.05,0:01:33.92,Default,,0,0,0,,{\i1}Thiếu nữ ôm nhiều ước mơ ấy{\i0}
Dialogue: 0,0:01:34.01,0:01:35.01,Default,,0,0,0,,{\i1}trở thành phụ nữ,{\i0}
Dialogue: 0,0:01:36.80,0:01:37.89,Default,,0,0,0,,{\i1}một người vợ{\i0}
Dialogue: 0,0:01:39.43,0:01:41.56,Default,,0,0,0,,{\i1}và trở thành một người mẹ.{\i0}
Dialogue: 0,0:01:42.77,0:01:46.48,Default,,0,0,0,,{\i1}Bà ấy có một đứa con\Nđược sinh ra bằng tình yêu của hai người.{\i0}
Dialogue: 0,0:01:47.81,0:01:50.27,Default,,0,0,0,,{\i1}Hạnh phúc mà bà ấy nghĩ là kéo dài mãi mãi{\i0}
Dialogue: 0,0:01:54.11,0:01:55.28,Default,,0,0,0,,{\i1}đã vội vụt tắt.{\i0}
Dialogue: 0,0:01:56.07,0:01:57.74,Default,,0,0,0,,{\an8}CHOI JUN-MO
Dialogue: 0,0:02:04.79,0:02:06.37,Default,,0,0,0,,{\i1}Lúc đó tôi không biết{\i0}
Dialogue: 0,0:02:07.41,0:02:09.71,Default,,0,0,0,,{\i1}rằng lý do mẹ không gục ngã{\i0}
Dialogue: 0,0:02:10.50,0:02:11.79,Default,,0,0,0,,{\i1}chính là tôi.{\i0}
Dialogue: 0,0:02:16.22,0:02:17.30,Default,,0,0,0,,A lô?
Dialogue: 0,0:02:18.13,0:02:19.13,Default,,0,0,0,,Sao ạ?
Dialogue: 0,0:02:21.80,0:02:24.18,Default,,0,0,0,,Cố lên, Yee-jae.
Dialogue: 0,0:02:24.27,0:02:25.81,Default,,0,0,0,,Tỉnh lại đi, Yee-jae.
Dialogue: 0,0:02:26.39,0:02:27.39,Default,,0,0,0,,Yee-jae.
Dialogue: 0,0:02:35.82,0:02:37.28,Default,,0,0,0,,Mẹ xin lỗi con.
Dialogue: 0,0:02:38.07,0:02:41.57,Default,,0,0,0,,Mẹ ước gì mình là người bị ốm.
Dialogue: 0,0:02:43.53,0:02:46.62,Default,,0,0,0,,{\i1}Tim mẹ đau như xé thành từng mảnh{\i0}
Dialogue: 0,0:02:47.04,0:02:49.29,Default,,0,0,0,,{\i1}vì mẹ không thể ốm thay tôi.{\i0}
Dialogue: 0,0:02:50.46,0:02:51.33,Default,,0,0,0,,Trưởng phòng.
Dialogue: 0,0:02:51.42,0:02:54.00,Default,,0,0,0,,Làm sao anh có thể sa thải tôi\Nchỉ sau một đêm?
Dialogue: 0,0:02:54.09,0:02:55.92,Default,,0,0,0,,Công ty đang khó khăn,\Ntôi biết phải làm sao?
Dialogue: 0,0:02:56.46,0:02:58.63,Default,,0,0,0,,- Trưởng phòng.\N- Bỏ tôi ra đi.
Dialogue: 0,0:03:02.22,0:03:03.22,Default,,0,0,0,,{\an8}HÃY TỪ CHỨC
Dialogue: 0,0:03:03.26,0:03:04.72,Default,,0,0,0,,{\an8}SA THẢI KHÔNG LÝ DO LÀ GIẾT NGƯỜI!
Dialogue: 0,0:03:04.81,0:03:06.35,Default,,0,0,0,,{\an8}NGƯỜI LAO ĐỘNG CŨNG CÓ QUYỀN.
Dialogue: 0,0:03:06.43,0:03:07.43,Default,,0,0,0,,{\i1}Mẹ tôi{\i0}
Dialogue: 0,0:03:08.10,0:03:10.94,Default,,0,0,0,,{\i1}đã đi qua đường hầm sâu thẳm và tối tăm{\i0}
Dialogue: 0,0:03:11.44,0:03:13.11,Default,,0,0,0,,{\i1}hơn cả tôi.{\i0}
Dialogue: 0,0:03:14.65,0:03:15.86,Default,,0,0,0,,{\i1}Nhưng mẹ tôi{\i0}
Dialogue: 0,0:03:16.94,0:03:18.24,Default,,0,0,0,,{\i1}chưa bao giờ từ bỏ{\i0}
Dialogue: 0,0:03:19.86,0:03:21.36,Default,,0,0,0,,{\i1}và nghĩ về quá khứ.{\i0}
Dialogue: 0,0:03:22.07,0:03:24.74,Default,,0,0,0,,{\i1}Mẹ chậm rãi lê bước, tiến về phía trước.{\i0}
Dialogue: 0,0:03:25.49,0:03:28.45,Default,,0,0,0,,{\i1}Tôi hạnh phúc vì có người mẹ như vậy.{\i0}
Dialogue: 0,0:03:32.17,0:03:34.96,Default,,0,0,0,,{\i1}Nhưng tôi cứ như một tên ngốc{\i0}
Dialogue: 0,0:03:38.76,0:03:40.55,Default,,0,0,0,,{\i1}chưa từng biết ơn về điều đó.{\i0}
Dialogue: 0,0:03:58.98,0:04:00.78,Default,,0,0,0,,{\i1}Con trai, cố lên.{\i0}
Dialogue: 0,0:04:00.86,0:04:02.95,Default,,0,0,0,,{\i1}Mẹ luôn ở bên cạnh con.{\i0}
Dialogue: 0,0:04:13.42,0:04:17.34,Default,,0,0,0,,{\an8}MẸ
Dialogue: 0,0:04:18.30,0:04:20.55,Default,,0,0,0,,{\i1}Số máy quý khách vừa gọi...{\i0}
Dialogue: 0,0:04:34.98,0:04:36.02,Default,,0,0,0,,A lô?
Dialogue: 0,0:04:37.73,0:04:39.90,Default,,0,0,0,,Cho hỏi có phải là mẹ\Ncủa anh Choi Yee-jae không?
Dialogue: 0,0:04:40.40,0:04:41.40,Default,,0,0,0,,Vâng.
Dialogue: 0,0:04:41.78,0:04:43.11,Default,,0,0,0,,Có chuyện gì sao?
Dialogue: 0,0:04:54.58,0:04:56.88,Default,,0,0,0,,Trời ơi...
Dialogue: 0,0:05:08.64,0:05:10.26,Default,,0,0,0,,Xin hãy xác minh danh tính.
Dialogue: 0,0:05:44.17,0:05:45.22,Default,,0,0,0,,Yee-jae.
Dialogue: 0,0:05:48.72,0:05:49.93,Default,,0,0,0,,Mẹ đến rồi.
Dialogue: 0,0:05:53.60,0:05:54.77,Default,,0,0,0,,Về nhà thôi con.
Dialogue: 0,0:05:57.10,0:05:58.48,Default,,0,0,0,,Tỉnh dậy đi con.
Dialogue: 0,0:06:01.27,0:06:02.27,Default,,0,0,0,,Yee-jae.
Dialogue: 0,0:06:04.03,0:06:05.15,Default,,0,0,0,,Yee-jae ơi...
Dialogue: 0,0:06:06.32,0:06:08.24,Default,,0,0,0,,Sao con trai tôi lại nằm ở đây?
Dialogue: 0,0:06:09.62,0:06:11.66,Default,,0,0,0,,Mẹ đến đây để đưa con về.
Dialogue: 0,0:06:12.62,0:06:14.37,Default,,0,0,0,,Nhanh tỉnh dậy đi con.
Dialogue: 0,0:06:14.95,0:06:15.95,Default,,0,0,0,,Yee-jae.
Dialogue: 0,0:06:16.54,0:06:17.54,Default,,0,0,0,,Mẹ đây con.
Dialogue: 0,0:06:17.62,0:06:18.79,Default,,0,0,0,,Mở mắt nhìn mẹ đi con.
Dialogue: 0,0:06:19.79,0:06:22.59,Default,,0,0,0,,Đừng chết mà, Yee-jae.
Dialogue: 0,0:06:25.26,0:06:30.55,Default,,0,0,0,,{\an8}CHOI YEE-JAE
Dialogue: 0,0:06:38.69,0:06:40.35,Default,,0,0,0,,{\i1}Cái chết có thể lây lan.{\i0}
Dialogue: 0,0:06:41.81,0:06:43.69,Default,,0,0,0,,{\i1}Khi tôi biến mất khỏi thế giới...{\i0}
Dialogue: 0,0:06:43.77,0:06:44.86,Default,,0,0,0,,Yee-jae!
Dialogue: 0,0:06:44.94,0:06:45.98,Default,,0,0,0,,{\i1}Cái chết của tôi{\i0}
Dialogue: 0,0:06:47.19,0:06:49.24,Default,,0,0,0,,{\i1}vẫn còn ở lại{\i0}
Dialogue: 0,0:06:50.28,0:06:53.03,Default,,0,0,0,,{\i1}cùng những người tôi yêu.{\i0}
Dialogue: 0,0:06:56.87,0:06:59.21,Default,,0,0,0,,Lần cuối bà thấy con trai là khi nào?
Dialogue: 0,0:07:00.83,0:07:02.50,Default,,0,0,0,,Một tuần trước.
Dialogue: 0,0:07:03.04,0:07:05.30,Default,,0,0,0,,Cậu ấy có dấu hiệu gì sẽ tự sát không?
Dialogue: 0,0:07:08.38,0:07:09.59,Default,,0,0,0,,Tôi không biết.
Dialogue: 0,0:07:10.55,0:07:12.85,Default,,0,0,0,,Bà nghĩ tại sao cậu ấy chết.
Dialogue: 0,0:07:13.68,0:07:15.18,Default,,0,0,0,,Tôi đã giết nó.
Dialogue: 0,0:07:17.89,0:07:19.73,Default,,0,0,0,,Cũng vì tội lỗi của tôi.
Dialogue: 0,0:07:26.40,0:07:29.15,Default,,0,0,0,,Nếu tôi là một người mẹ\Ncó đầu óc sáng suốt
Dialogue: 0,0:07:30.40,0:07:32.41,Default,,0,0,0,,thì chuyện này đã không xảy ra.
Dialogue: 0,0:07:37.74,0:07:39.66,Default,,0,0,0,,Thằng bé sáng dạ lắm.
Dialogue: 0,0:07:39.75,0:07:42.17,Default,,0,0,0,,- Cháu chị đã được một tuổi rồi sao?\N- Ôi chao...
Dialogue: 0,0:07:42.25,0:07:44.13,Default,,0,0,0,,- Bánh gạo chắc là ngon lắm.\N- Cảm ơn.
Dialogue: 0,0:07:44.21,0:07:46.71,Default,,0,0,0,,- Ngon miệng nhé.\N- Cảm ơn.
Dialogue: 0,0:07:46.80,0:07:49.17,Default,,0,0,0,,- Cháu của chị được một tuổi rồi sao?\N- Đây, Seon-hui.
Dialogue: 0,0:07:49.26,0:07:50.51,Default,,0,0,0,,- Vâng.\N- Trời ơi.
Dialogue: 0,0:07:50.59,0:07:52.01,Default,,0,0,0,,Cảm ơn nhé.
Dialogue: 0,0:07:52.09,0:07:53.72,Default,,0,0,0,,- Đúng không?\N- Tuyệt quá.
Dialogue: 0,0:07:53.80,0:07:55.01,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:07:55.10,0:07:56.81,Default,,0,0,0,,Chị ấy nói đúng.
Dialogue: 0,0:07:56.89,0:07:59.06,Default,,0,0,0,,Thật luôn, bọn trẻ lớn nhanh như thổi.
Dialogue: 0,0:07:59.14,0:08:00.81,Default,,0,0,0,,Chưa gì đã thành bà nội rồi.
Dialogue: 0,0:08:00.89,0:08:03.52,Default,,0,0,0,,Chị vẫn còn quá trẻ để thành bà đấy.
Dialogue: 0,0:08:03.60,0:08:05.23,Default,,0,0,0,,Cô nói đúng.
Dialogue: 0,0:08:05.86,0:08:07.07,Default,,0,0,0,,- Sao thế?\N- Cái này.
Dialogue: 0,0:08:07.98,0:08:09.82,Default,,0,0,0,,Mua vài bộ đồ cho cháu trai đi.
Dialogue: 0,0:08:09.90,0:08:12.07,Default,,0,0,0,,Thôi mà, không cần đâu mẹ Yee-jae.
Dialogue: 0,0:08:12.15,0:08:13.28,Default,,0,0,0,,Được rồi mà.
Dialogue: 0,0:08:13.36,0:08:14.95,Default,,0,0,0,,Cầm lấy đi mà.
Dialogue: 0,0:08:16.24,0:08:17.28,Default,,0,0,0,,Mẹ Yee-jae...
Dialogue: 0,0:08:18.54,0:08:19.95,Default,,0,0,0,,Sao cô ấy lại đưa tôi chứ?
Dialogue: 0,0:08:20.58,0:08:21.58,Default,,0,0,0,,Khó chịu thật.
Dialogue: 0,0:08:21.66,0:08:24.04,Default,,0,0,0,,Đúng, coi chừng bị liên luỵ đấy.
Dialogue: 0,0:08:24.12,0:08:27.17,Default,,0,0,0,,Đừng dùng tiền đó để mua quần áo\Ncho cháu trai nhé.
Dialogue: 0,0:08:27.25,0:08:30.09,Default,,0,0,0,,Tôi không định mời cô ta đến\Nđám cưới của con gái tôi đâu.
Dialogue: 0,0:08:30.17,0:08:32.17,Default,,0,0,0,,Mọi người đừng nhắc gì nhé.
Dialogue: 0,0:08:37.60,0:08:40.27,Default,,0,0,0,,{\an8}SỐ PHẬN CỦA CON LÀ DO MẸ TẠO NÊN
Dialogue: 0,0:08:40.35,0:08:41.35,Default,,0,0,0,,{\an8}NAPOLEON
Dialogue: 0,0:09:14.38,0:09:17.59,Default,,0,0,0,,Anh tự sát vì cảm thấy vô vọng sao?
Dialogue: 0,0:09:17.68,0:09:18.93,Default,,0,0,0,,Có gì sai à?
Dialogue: 0,0:09:19.01,0:09:21.10,Default,,0,0,0,,Tôi không có làm hại ai cả.
Dialogue: 0,0:09:21.18,0:09:22.56,Default,,0,0,0,,Nghĩ kỹ lại đi,
Dialogue: 0,0:09:23.52,0:09:25.02,Default,,0,0,0,,có thật là không hại ai không.
Dialogue: 0,0:09:25.10,0:09:28.44,Default,,0,0,0,,Tôi không nghĩ tới gia đình của cô gái đã chết\Ntrong khi điều đó là hiển nhiên.
Dialogue: 0,0:09:28.52,0:09:30.07,Default,,0,0,0,,Sao mà nghĩ tới chuyện đó được?
Dialogue: 0,0:09:31.36,0:09:34.15,Default,,0,0,0,,Anh là một tên ích kỷ, không nghĩ đến nỗi buồn
Dialogue: 0,0:09:34.82,0:09:36.41,Default,,0,0,0,,mà gia đình phải trải qua.
Dialogue: 0,0:09:36.49,0:09:38.45,Default,,0,0,0,,Ông ấy nghĩ tôi là người đã giết con gái mình.
Dialogue: 0,0:09:39.49,0:09:41.66,Default,,0,0,0,,Tất nhiên là ông ấy muốn giết tôi.
Dialogue: 0,0:09:41.74,0:09:43.75,Default,,0,0,0,,Vậy mẹ của anh sẽ muốn giết ai đây?
Dialogue: 0,0:09:44.12,0:09:46.75,Default,,0,0,0,,{\i1}Tử thần biết{\i0}
Dialogue: 0,0:09:47.37,0:09:50.46,Default,,0,0,0,,{\i1}tôi đã phạm sai lầm gì.{\i0}
Dialogue: 0,0:09:52.13,0:09:56.05,Default,,0,0,0,,{\i1}Tôi đã trải qua 12 cái chết đau đớn\Nnhư sự trừng phạt cho những gì tôi đã làm.{\i0}
Dialogue: 0,0:09:56.84,0:10:00.72,Default,,0,0,0,,{\i1}Trong đó, nỗi đau lớn nhất mà\NTử thần dành cho tôi{\i0}
Dialogue: 0,0:10:01.51,0:10:03.35,Default,,0,0,0,,{\i1}không phải là khi chết cháy,{\i0}
Dialogue: 0,0:10:03.89,0:10:06.27,Default,,0,0,0,,{\i1}cũng không phải là lúc bị phanh thây,{\i0}
Dialogue: 0,0:10:07.85,0:10:09.31,Default,,0,0,0,,Ji-su…
Dialogue: 0,0:10:10.52,0:10:12.94,Default,,0,0,0,,{\i1}mà là nỗi đau phải chứng kiến{\i0}
Dialogue: 0,0:10:16.99,0:10:18.24,Default,,0,0,0,,{\i1}người mình yêu thương chết.{\i0}
Dialogue: 0,0:10:22.12,0:10:25.08,Default,,0,0,0,,{\i1}Nỗi đau đớn mà tôi đã gây ra cho mẹ{\i0}
Dialogue: 0,0:10:26.08,0:10:29.79,Default,,0,0,0,,{\i1}đã quay về với tôi.{\i0}
Dialogue: 0,0:11:00.20,0:11:02.57,Default,,0,0,0,,{\i1}Tôi quyết định sẽ sống cuộc đời của mẹ.{\i0}
Dialogue: 0,0:11:03.08,0:11:08.00,Default,,0,0,0,,{\i1}Đó là hình phạt mà tôi dành cho\Nchính bản thân mình.{\i0}
Dialogue: 0,0:11:13.21,0:11:15.09,Default,,0,0,0,,{\i1}Chuyến tàu điện đầu tiên trong ngày{\i0}
Dialogue: 0,0:11:15.17,0:11:17.01,Default,,0,0,0,,{\i1}được lấp đầy bởi những người\Nlà bố mẹ của ai đó{\i0}
Dialogue: 0,0:11:17.05,0:11:19.09,Default,,0,0,0,,{\i1}đang không ngừng cố gắng sống.{\i0}
Dialogue: 0,0:11:20.63,0:11:22.09,Default,,0,0,0,,{\i1}Trước mặt những người này{\i0}
Dialogue: 0,0:11:23.14,0:11:27.31,Default,,0,0,0,,{\i1}tôi có thể nói rằng mình\Nđã cố hết sức không?{\i0}
Dialogue: 0,0:11:28.77,0:11:34.15,Default,,0,0,0,,{\i1}Tôi thấy xấu hổ vì cái chết của chính mình.{\i0}
Dialogue: 0,0:12:43.97,0:12:49.72,Default,,0,0,0,,{\an8}TÀI KHOẢN TIẾT KIỆM ĐĂNG KÝ NHÀ Ở\NCHOI YEE-JAE
Dialogue: 0,0:12:51.06,0:12:53.44,Default,,0,0,0,,{\i1}Sổ tiết kiệm này{\i0}
Dialogue: 0,0:12:54.69,0:12:57.36,Default,,0,0,0,,là món quà mẹ chuẩn bị
Dialogue: 0,0:12:57.44,0:12:59.56,Default,,0,0,0,,cho con trai Yee-jae của mẹ\Nkhi con có ý định mua nhà.
Dialogue: 0,0:13:01.90,0:13:02.90,Default,,0,0,0,,Ôi trời...
Dialogue: 0,0:13:03.57,0:13:06.24,Default,,0,0,0,,Con có thể lớn chậm một chút không?
Dialogue: 0,0:13:07.12,0:13:09.53,Default,,0,0,0,,Để mẹ có thể sống với con lâu hơn.
Dialogue: 0,0:13:48.32,0:13:49.78,Default,,0,0,0,,Cửa đang đóng.
Dialogue: 0,0:13:50.24,0:13:52.58,Default,,0,0,0,,Xin hãy giữ khoảng cách an toàn.
Dialogue: 0,0:14:06.47,0:14:09.22,Default,,0,0,0,,{\an8}KHỞI ĐẦU CUỘC SỐNG THỨ HAI CỦA BẠN\NCÔNG VIÊN TƯỚNG NIỆM SEONA
Dialogue: 0,0:14:09.68,0:14:10.68,Default,,0,0,0,,{\i1}Cái gì?{\i0}
Dialogue: 0,0:14:11.43,0:14:12.51,Default,,0,0,0,,{\i1}Nơi này{\i0}
Dialogue: 0,0:14:13.68,0:14:17.35,Default,,0,0,0,,{\i1}gần chỗ để tro cốt của mình.{\i0}
Dialogue: 0,0:14:51.76,0:14:52.85,Default,,0,0,0,,{\i1}Yee-jae.{\i0}
Dialogue: 0,0:15:29.84,0:15:31.76,Default,,0,0,0,,{\i1}Mẹ đã luôn đến đây{\i0}
Dialogue: 0,0:15:32.76,0:15:35.64,Default,,0,0,0,,{\i1}sau khi tan làm.{\i0}
Dialogue: 0,0:15:50.03,0:15:51.15,Default,,0,0,0,,Con trai của mẹ.
Dialogue: 0,0:15:52.70,0:15:54.78,Default,,0,0,0,,Hôm nay con sống có tốt không?
Dialogue: 0,0:15:57.08,0:16:00.91,Default,,0,0,0,,Mẹ không có tư cách làm mẹ của con\Nkhi không cứu được
Dialogue: 0,0:16:01.96,0:16:03.29,Default,,0,0,0,,đứa con duy nhất của mình.
Dialogue: 0,0:16:06.25,0:16:07.38,Default,,0,0,0,,Mẹ không hiểu tại sao
Dialogue: 0,0:16:08.21,0:16:11.93,Default,,0,0,0,,mẹ vẫn tự xưng là mẹ\Nkhi mẹ không có tư cách.
Dialogue: 0,0:16:13.93,0:16:14.93,Default,,0,0,0,,Yee-jae.
Dialogue: 0,0:16:17.47,0:16:20.93,Default,,0,0,0,,Có nhớ lúc mẹ bảo kiếp sau\Ncon hãy tiếp tục làm con trai mẹ không?
Dialogue: 0,0:16:23.31,0:16:24.56,Default,,0,0,0,,Mẹ sẽ rút lại câu đó.
Dialogue: 0,0:16:26.31,0:16:27.94,Default,,0,0,0,,Con phải tìm được bố mẹ
Dialogue: 0,0:16:29.23,0:16:31.32,Default,,0,0,0,,giàu và tốt hơn mẹ
Dialogue: 0,0:16:32.28,0:16:36.03,Default,,0,0,0,,để kiếp sau con có thể được sống hạnh phúc.
Dialogue: 0,0:16:39.24,0:16:42.04,Default,,0,0,0,,Mẹ sẽ theo dõi con từ xa
Dialogue: 0,0:16:43.21,0:16:45.50,Default,,0,0,0,,chỉ để xem
Dialogue: 0,0:16:47.17,0:16:48.92,Default,,0,0,0,,con có sống tốt hay không thôi.
Dialogue: 0,0:16:51.55,0:16:53.43,Default,,0,0,0,,Mẹ sẽ làm như không quen biết con,
Dialogue: 0,0:16:55.43,0:16:57.30,Default,,0,0,0,,Mẹ chỉ muốn ngắm nhìn con thôi.
Dialogue: 0,0:16:58.05,0:16:59.18,Default,,0,0,0,,Đổi lại,
Dialogue: 0,0:17:02.81,0:17:04.23,Default,,0,0,0,,kiếp sau
Dialogue: 0,0:17:05.98,0:17:07.11,Default,,0,0,0,,con nhất định
Dialogue: 0,0:17:08.77,0:17:10.65,Default,,0,0,0,,phải sống đến cuối đời nhé.
Dialogue: 0,0:17:45.27,0:17:47.40,Default,,0,0,0,,{\i1}Tôi muốn xin lỗi mẹ{\i0}
Dialogue: 0,0:17:49.36,0:17:50.77,Default,,0,0,0,,{\i1}và muốn nói với mẹ{\i0}
Dialogue: 0,0:17:51.69,0:17:53.78,Default,,0,0,0,,{\i1}rằng ở kiếp sau{\i0}
Dialogue: 0,0:17:55.49,0:17:56.82,Default,,0,0,0,,{\i1}tôi vẫn muốn làm con trai của mẹ.{\i0}
Dialogue: 0,0:18:01.83,0:18:03.54,Default,,0,0,0,,{\i1}Nhưng không có một lời nào{\i0}
Dialogue: 0,0:18:04.41,0:18:05.79,Default,,0,0,0,,{\i1}cũng không có một cảm xúc nào{\i0}
Dialogue: 0,0:18:06.50,0:18:07.96,Default,,0,0,0,,{\i1}có thể chạm tới mẹ.{\i0}
Dialogue: 0,0:18:09.96,0:18:11.09,Default,,0,0,0,,{\i1}Đó chính là...{\i0}
Dialogue: 0,0:18:12.88,0:18:14.13,Default,,0,0,0,,{\i1}cái chết.{\i0}
Dialogue: 0,0:18:27.89,0:18:30.27,Default,,0,0,0,,{\i1}Mẹ có nơi nào muốn đi cùng con không?{\i0}
Dialogue: 0,0:18:31.15,0:18:33.19,Default,,0,0,0,,Mẹ muốn đến núi Obong.
Dialogue: 0,0:18:33.27,0:18:34.53,Default,,0,0,0,,Núi Obong?
Dialogue: 0,0:18:34.65,0:18:37.86,Default,,0,0,0,,Đó là nơi mẹ hay đến với bố khi còn trẻ.
Dialogue: 0,0:18:37.95,0:18:38.86,Default,,0,0,0,,Khi con có việc làm
Dialogue: 0,0:18:38.95,0:18:41.24,Default,,0,0,0,,con sẽ dẫn mẹ đến núi Obong.
Dialogue: 0,0:18:41.32,0:18:42.70,Default,,0,0,0,,Trời ạ...
Dialogue: 0,0:18:42.78,0:18:44.79,Default,,0,0,0,,Con trai mẹ là số một.
Dialogue: 0,0:18:46.29,0:18:47.37,Default,,0,0,0,,Mà này,
Dialogue: 0,0:18:47.46,0:18:50.08,Default,,0,0,0,,mẹ không đi nổi vì đầu gối mẹ đau lắm.
Dialogue: 0,0:18:50.17,0:18:51.00,Default,,0,0,0,,Thôi nào.
Dialogue: 0,0:18:51.08,0:18:53.00,Default,,0,0,0,,Con sẽ cõng mẹ lên núi,
Dialogue: 0,0:18:53.75,0:18:54.96,Default,,0,0,0,,mẹ chờ con một chút nữa nhé.
Dialogue: 0,0:19:27.37,0:19:29.91,Default,,0,0,0,,{\i1}Dù cho đã muộn, tôi cũng muốn cho mẹ thấy.{\i0}
Dialogue: 0,0:19:30.79,0:19:32.46,Default,,0,0,0,,{\i1}Tôi muốn cho mẹ thấy{\i0}
Dialogue: 0,0:19:32.83,0:19:34.71,Default,,0,0,0,,{\i1}nơi mà mẹ đã từng đến cùng với bố{\i0}
Dialogue: 0,0:19:35.13,0:19:38.09,Default,,0,0,0,,{\i1}khi họ còn trẻ và thích leo núi.{\i0}
Dialogue: 0,0:21:06.93,0:21:08.14,Default,,0,0,0,,Đẹp quá.
Dialogue: 0,0:21:23.74,0:21:24.78,Default,,0,0,0,,Mẹ.
Dialogue: 0,0:21:32.75,0:21:34.29,Default,,0,0,0,,Con xin lỗi vì con đã quên.
Dialogue: 0,0:21:38.08,0:21:39.79,Default,,0,0,0,,Con xin lỗi
Dialogue: 0,0:21:41.55,0:21:42.88,Default,,0,0,0,,vì đã không thể giữ lời hứa.
Dialogue: 0,0:23:45.67,0:23:48.59,Default,,0,0,0,,Có ai ở đây không?
Dialogue: 0,0:23:51.88,0:23:53.30,Default,,0,0,0,,Cứu tôi với.
Dialogue: 0,0:23:53.76,0:23:54.76,Default,,0,0,0,,Làm ơn...
Dialogue: 0,0:24:33.76,0:24:35.22,Default,,0,0,0,,Không thể chết như vậy được.
Dialogue: 0,0:24:38.97,0:24:40.85,Default,,0,0,0,,Mẹ đừng chết nhé, mẹ ơi.
Dialogue: 0,0:24:46.44,0:24:48.61,Default,,0,0,0,,Mẹ đừng chết.
Dialogue: 0,0:25:55.59,0:25:57.93,Default,,0,0,0,,Cảm ơn mẹ vì đã sống sót.
Dialogue: 0,0:26:11.77,0:26:12.82,Default,,0,0,0,,{\i1}Yee-jae.{\i0}
Dialogue: 0,0:26:13.99,0:26:15.32,Default,,0,0,0,,Nhanh tỉnh lại đi con.
Dialogue: 0,0:26:16.07,0:26:17.20,Default,,0,0,0,,Về nhà thôi con.
Dialogue: 0,0:26:17.95,0:26:20.95,Default,,0,0,0,,Đừng chết mà Yee-jae ơi.
Dialogue: 0,0:26:23.49,0:26:24.50,Default,,0,0,0,,Mẹ.
Dialogue: 0,0:26:25.75,0:26:27.12,Default,,0,0,0,,Không thể chết như vậy được.
Dialogue: 0,0:26:27.54,0:26:29.42,Default,,0,0,0,,Xin mẹ đừng chết.
Dialogue: 0,0:26:30.58,0:26:34.05,Default,,0,0,0,,{\i1}Sự tha thiết mong mẹ đừng chết của tôi{\i0}
Dialogue: 0,0:26:35.38,0:26:37.97,Default,,0,0,0,,{\i1}không khác gì nỗi tuyệt vọng của mẹ{\i0}
Dialogue: 0,0:26:39.05,0:26:43.10,Default,,0,0,0,,{\i1}khi nhìn thấy thi thể lạnh lẽo\Ncủa tôi trong nhà xác.{\i0}
Dialogue: 0,0:26:44.27,0:26:45.60,Default,,0,0,0,,Tôi sai rồi.
Dialogue: 0,0:26:47.85,0:26:50.19,Default,,0,0,0,,Tôi thật sự sai rồi.
Dialogue: 0,0:26:58.95,0:27:01.74,Default,,0,0,0,,{\i1}Để thực hiện ước nguyện của mẹ{\i0}
Dialogue: 0,0:27:02.70,0:27:04.66,Default,,0,0,0,,{\i1}là tôi có thể sống đến cuối cùng,{\i0}
Dialogue: 0,0:27:06.29,0:27:07.37,Default,,0,0,0,,{\i1}Tôi{\i0}
Dialogue: 0,0:27:10.83,0:27:12.17,Default,,0,0,0,,{\i1}phải tiếp tục sống.{\i0}
Dialogue: 0,0:27:27.73,0:27:30.02,Default,,0,0,0,,{\i1}Tôi đã sống 32 năm,{\i0}
Dialogue: 0,0:27:32.65,0:27:35.32,Default,,0,0,0,,{\i1}dài hơn quãng đời của Choi Yee-jae…{\i0}
Dialogue: 0,0:27:38.32,0:27:40.07,Default,,0,0,0,,{\i1}cùng với nỗi nhớ nhung{\i0}
Dialogue: 0,0:27:42.87,0:27:44.12,Default,,0,0,0,,{\i1}những người{\i0}
Dialogue: 0,0:27:45.79,0:27:47.04,Default,,0,0,0,,{\i1}mà tôi đã nói lời từ biệt.{\i0}
Dialogue: 0,0:28:00.47,0:28:02.39,Default,,0,0,0,,{\i1}Không thể nói rằng mình đang sống{\i0}
Dialogue: 0,0:28:03.22,0:28:05.05,Default,,0,0,0,,{\i1}khi bản thân có quá nhiều nỗi sợ.{\i0}
Dialogue: 0,0:28:07.56,0:28:09.64,Default,,0,0,0,,{\i1}Nhưng kẻ nhát gan như tôi{\i0}
Dialogue: 0,0:28:11.39,0:28:14.23,Default,,0,0,0,,{\i1}đã sống một cuộc đời đầy nỗi sợ.{\i0}
Dialogue: 0,0:28:16.48,0:28:18.86,Default,,0,0,0,,{\i1}Nỗi sợ rằng người khác\Nsẽ không công nhận mình,{\i0}
Dialogue: 0,0:28:20.07,0:28:21.70,Default,,0,0,0,,{\i1}nỗi sợ bản thân sẽ thua kém,{\i0}
Dialogue: 0,0:28:25.32,0:28:26.99,Default,,0,0,0,,{\i1}và nỗi sợ bị từ chối.{\i0}
Dialogue: 0,0:28:28.16,0:28:31.37,Default,,0,0,0,,{\i1}Tôi đã đặt dấu chấm cho cuộc đời mình{\i0}
Dialogue: 0,0:28:33.04,0:28:34.38,Default,,0,0,0,,{\i1}bởi vì nỗi sợ{\i0}
Dialogue: 0,0:28:35.54,0:28:37.38,Default,,0,0,0,,{\i1}trước khi cuộc đời nở hoa.{\i0}
Dialogue: 0,0:28:39.42,0:28:41.34,Default,,0,0,0,,{\i1}Chỉ khi chết thì tôi mới biết{\i0}
Dialogue: 0,0:28:43.13,0:28:44.14,Default,,0,0,0,,{\i1}rằng cuộc sống{\i0}
Dialogue: 0,0:28:45.51,0:28:47.14,Default,,0,0,0,,{\i1}là một cơ hội.{\i0}
Dialogue: 0,0:28:50.14,0:28:53.14,Default,,0,0,0,,{\i1}Và tất cả những gì tôi nghĩ là nỗi đau\Nkhi còn sống{\i0}
Dialogue: 0,0:28:54.85,0:28:56.65,Default,,0,0,0,,{\i1}chỉ là một phần của cuộc đời.{\i0}
Dialogue: 0,0:29:00.48,0:29:02.11,Default,,0,0,0,,{\i1}Một ngày trong lành.{\i0}
Dialogue: 0,0:29:05.61,0:29:07.12,Default,,0,0,0,,{\i1}Một ngày mưa bão.{\i0}
Dialogue: 0,0:29:10.49,0:29:11.91,Default,,0,0,0,,{\i1}Một ngày giông gió.{\i0}
Dialogue: 0,0:29:13.71,0:29:15.42,Default,,0,0,0,,{\i1}Tất cả những ngày đó{\i0}
Dialogue: 0,0:29:16.29,0:29:18.38,Default,,0,0,0,,{\i1}ghép lại thành một cuộc đời.{\i0}
Dialogue: 0,0:29:21.34,0:29:22.97,Default,,0,0,0,,{\i1}Có thất bại cũng không sao{\i0}
Dialogue: 0,0:29:24.18,0:29:26.14,Default,,0,0,0,,{\i1}miễn là mình bước tiếp.{\i0}
Dialogue: 0,0:29:29.10,0:29:32.81,Default,,0,0,0,,{\i1}Chỉ khi tái sinh trong thân xác của mẹ{\i0}
Dialogue: 0,0:29:34.06,0:29:35.23,Default,,0,0,0,,{\i1}tôi cuối cùng{\i0}
Dialogue: 0,0:29:36.98,0:29:38.15,Default,,0,0,0,,{\i1}cũng nhận ra điều đó.{\i0}
Dialogue: 0,0:31:34.68,0:31:36.72,Default,,0,0,0,,Tôi thật sự không muốn nói
Dialogue: 0,0:31:39.31,0:31:41.19,Default,,0,0,0,,nhưng tôi nhớ cô lắm.
Dialogue: 0,0:31:42.40,0:31:44.02,Default,,0,0,0,,Tôi không nhận ra rằng
Dialogue: 0,0:31:44.65,0:31:46.44,Default,,0,0,0,,phải lâu như vậy mới gặp lại cô.
Dialogue: 0,0:31:49.11,0:31:50.20,Default,,0,0,0,,Vậy sao?
Dialogue: 0,0:31:51.49,0:31:53.53,Default,,0,0,0,,Tôi không biết khái niệm thời gian.
Dialogue: 0,0:31:54.58,0:31:57.33,Default,,0,0,0,,Tôi chỉ nghĩ là anh tốn\Nnhiều thời gian hơn để chết.
Dialogue: 0,0:31:58.58,0:32:01.00,Default,,0,0,0,,Đó là khoảng thời gian rất lâu với tôi.
Dialogue: 0,0:32:02.29,0:32:03.42,Default,,0,0,0,,Và...
Dialogue: 0,0:32:04.17,0:32:06.84,Default,,0,0,0,,trong khoảng thời gian đó\Ntôi luôn nghĩ khi gặp lại cô
Dialogue: 0,0:32:07.59,0:32:09.59,Default,,0,0,0,,mình phải làm gì.
Dialogue: 0,0:32:25.90,0:32:27.15,Default,,0,0,0,,Tôi cầu xin cô.
Dialogue: 0,0:32:29.99,0:32:31.11,Default,,0,0,0,,Cô có thể
Dialogue: 0,0:32:32.53,0:32:33.91,Default,,0,0,0,,bắn tôi một lần,
Dialogue: 0,0:32:34.87,0:32:36.66,Default,,0,0,0,,chỉ một lần nữa được không?
Dialogue: 0,0:32:40.79,0:32:43.58,Default,,0,0,0,,Tôi đã dùng hết số đạn dành cho anh.
Dialogue: 0,0:32:46.71,0:32:47.75,Default,,0,0,0,,Tôi biết.
Dialogue: 0,0:32:49.13,0:32:50.13,Default,,0,0,0,,Tôi biết.
Dialogue: 0,0:32:52.05,0:32:53.51,Default,,0,0,0,,Nhưng hãy cho tôi cơ hội
Dialogue: 0,0:32:54.89,0:32:57.89,Default,,0,0,0,,được sống là chính mình.
Dialogue: 0,0:33:09.90,0:33:12.86,Default,,0,0,0,,Xin hãy tôi được sống như Choi Yee-jae.
Dialogue: 0,0:33:12.95,0:33:15.03,Default,,0,0,0,,Tôi cầu xin cô.
Dialogue: 0,0:33:15.11,0:33:16.16,Default,,0,0,0,,Làm ơn...
Dialogue: 0,0:33:18.83,0:33:19.91,Default,,0,0,0,,Tại sao?
Dialogue: 0,0:33:36.47,0:33:41.18,Default,,0,0,0,,Tôi muốn ôm mẹ một lần.
Dialogue: 0,0:33:56.24,0:33:58.28,Default,,0,0,0,,Anh nói là sẽ thắng tôi
Dialogue: 0,0:33:59.37,0:34:01.41,Default,,0,0,0,,trong trò chơi mà tôi tạo ra mà.
Dialogue: 0,0:34:04.16,0:34:05.25,Default,,0,0,0,,Anh đã thắng.
Dialogue: 0,0:34:06.25,0:34:07.08,Default,,0,0,0,,Sao cơ?
Dialogue: 0,0:34:07.17,0:34:09.25,Default,,0,0,0,,Anh đã tránh được cái chết và tồn tại.
Dialogue: 0,0:34:09.54,0:34:11.67,Default,,0,0,0,,Hình phạt của tôi đã chấm dứt.
Dialogue: 0,0:34:11.75,0:34:14.01,Default,,0,0,0,,Giờ chỉ còn phán quyết của Chúa thôi.
Dialogue: 0,0:34:23.97,0:34:25.93,Default,,0,0,0,,Trước lúc đó,
Dialogue: 0,0:34:27.77,0:34:29.48,Default,,0,0,0,,tôi sẽ cho anh thêm một viên đạn.
Dialogue: 0,0:34:33.53,0:34:34.61,Default,,0,0,0,,Thật sao?
Dialogue: 0,0:34:39.62,0:34:41.70,Default,,0,0,0,,Nếu phát súng này nổ
Dialogue: 0,0:34:41.78,0:34:43.74,Default,,0,0,0,,có nghĩa là anh đã có thêm cơ hội như ý muốn.
Dialogue: 0,0:34:46.33,0:34:47.50,Default,,0,0,0,,Nếu không thì sao?
Dialogue: 0,0:34:47.58,0:34:49.29,Default,,0,0,0,,Vậy thì để Chúa giải quyết.
Dialogue: 0,0:36:03.78,0:36:09.58,Default,,0,0,0,,{\an8}MẸ
Dialogue: 0,0:36:16.13,0:36:17.13,Default,,0,0,0,,Mẹ.
Dialogue: 0,0:36:50.41,0:36:54.46,Default,,0,0,0,,{\an8}BẠN LÀ DUY NHẤT TRÊN THẾ GIỚI NÀY
