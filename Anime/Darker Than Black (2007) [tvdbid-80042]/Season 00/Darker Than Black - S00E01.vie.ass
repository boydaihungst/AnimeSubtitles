Dialogue: 0,0:00:02.69,0:00:05.48,Dialogue,,0000,0000,0000,,Trong khoảng khắc ấy, những cơn gió bỗng nhiên thổi mạnh.
Dialogue: 0,0:00:06.21,0:00:08.95,Dialogue,,0000,0000,0000,,Bên dưới những tán hoa anh đào nở rộ,
Dialogue: 0,0:00:08.95,0:00:14.61,Dialogue,,0000,0000,0000,,chàng trai đeo mặt nạ thì thầm điều gì đó với con mèo đang nép dưới chân anh.
Dialogue: 0,0:00:15.28,0:00:22.16,Dialogue,,0000,0000,0000,,Kỳ lạ thay, nó là một con mèo biết nói.
Dialogue: 0,0:00:23.66,0:00:27.14,Dialogue,,0000,0000,0000,,Ui, tuyệt vời quá, có diễn biến mới!
Dialogue: 0,0:00:27.14,0:00:28.58,Dialogue,,0000,0000,0000,,Sao nữa đây, sao nữa đây?
Dialogue: 0,0:00:28.58,0:00:31.95,Dialogue,,0000,0000,0000,,Sau đó, chàng trai đeo mặt nạ bay xuống...
Dialogue: 0,0:00:34.60,0:00:36.59,Dialogue,,0000,0000,0000,,Ui trời, thật mất hứng quá đi!
Dialogue: 0,0:00:50.38,0:00:52.10,Dialogue,,0000,0000,0000,,Thật hết biết!
Dialogue: 0,0:00:52.10,0:00:54.82,Dialogue,,0000,0000,0000,,Tại sao cái giống nào cũng muốn sinh sản chứ?
Dialogue: 0,0:00:54.82,0:00:56.83,Dialogue,,0000,0000,0000,,Chính thế mà mình ghét mùa xuân.
Dialogue: 0,0:01:03.45,0:01:05.65,Dialogue,,0000,0000,0000,,Tôi là Otsuka Mayu.
Dialogue: 0,0:01:05.65,0:01:08.46,Dialogue,,0000,0000,0000,,Một thành viên của Bộ Ngoại giao Đơn vị 4.
Dialogue: 0,0:01:08.46,0:01:12.17,Dialogue,,0000,0000,0000,,Nói cho các bạn biết thôi nhé, hồi đang học đại học,\N tôi đã từng tham gia một CLB Manga.
Dialogue: 0,0:01:12.17,0:01:14.71,Dialogue,,0000,0000,0000,,Và quả thật tôi thấy rất thích nó.
Dialogue: 0,0:01:14.71,0:01:16.63,Dialogue,,0000,0000,0000,,Anime tôi đang theo đuổi bây giờ là...
Dialogue: 0,0:01:17.30,0:01:18.55,Dialogue,,0000,0000,0000,,Maurice hoa hồng.
Dialogue: 0,0:01:19.28,0:01:21.30,Dialogue,,0000,0000,0000,,Sở thích của tôi là viết truyện.
Dialogue: 0,0:01:21.30,0:01:25.96,Dialogue,,0000,0000,0000,,Tất nhiên, tôi đã hoàn thành xong khá nhiều tác phẩm và cũng đã có khá nhiều Fan.
Dialogue: 0,0:01:29.98,0:01:32.77,Dialogue,,0000,0000,0000,,Phấn hoa năm nay ghê quá.
Dialogue: 0,0:01:32.77,0:01:34.58,Dialogue,,0000,0000,0000,,Thế nên mình mới ghét mùa xuân.
Dialogue: 0,0:01:38.78,0:01:41.59,Dialogue,,0000,0000,0000,,"Người con trai đeo mặt nạ đứng giữa những gốc hoa đào nở."
Dialogue: 0,0:01:41.59,0:01:46.28,Dialogue,,0000,0000,0000,,Tôi chợt nảy ra ý tưởng này từ một giấc mơ của tôi tối hôm qua.
Dialogue: 0,0:01:46.28,0:01:49.58,Dialogue,,0000,0000,0000,,Không, có thật nó là một giấc mơ không?
Dialogue: 0,0:01:50.63,0:01:53.33,Dialogue,,0000,0000,0000,,Đến bây giờ, tôi vẫn chưa dám chắc.
Dialogue: 0,0:03:25.57,0:03:30.97,Dialogue,,0000,0000,0000,,Các thành viên thuộc Đơn vị 4 đã quyết định tổ chức\N một buổi đi ngắm hoa vào đêm hôm ấy.
Dialogue: 0,0:03:30.97,0:03:32.07,Dialogue,,0000,0000,0000,,Cái gì đây?
Dialogue: 0,0:03:32.07,0:03:36.07,Dialogue,,0000,0000,0000,,Là thông tin mà gã Contractor bị giết hôm trước đang nắm giữ.
Dialogue: 0,0:03:36.07,0:03:40.70,Dialogue,,0000,0000,0000,,Nó giống như mật mã của một chiếc két sắt\N và chúng ta đã tìm thấy nó, nhưng...
Dialogue: 0,0:03:40.70,0:03:43.58,Dialogue,,0000,0000,0000,,Những con số quan trọng nhất đã bị mất.
Dialogue: 0,0:03:43.58,0:03:46.19,Dialogue,,0000,0000,0000,,Vật bị đánh cắp có liên quan đến Cánh Cổng à?
Dialogue: 0,0:03:46.19,0:03:47.96,Dialogue,,0000,0000,0000,,Theo tôi là vậy.
Dialogue: 0,0:03:48.65,0:03:49.99,Dialogue,,0000,0000,0000,,Dưới một gốc hoa anh đào à?
Dialogue: 0,0:03:49.99,0:03:54.88,Dialogue,,0000,0000,0000,,Ừ, xem ra đã có một Contractor chôn một món hàng trong Cánh Cổng tại đó.
Dialogue: 0,0:03:54.88,0:03:56.74,Dialogue,,0000,0000,0000,,Vậy tôi phải giết gã Contractor đó à?
Dialogue: 0,0:03:56.74,0:03:59.75,Dialogue,,0000,0000,0000,,Không, cậu chỉ cần đào món hàng lên thôi.
Dialogue: 0,0:03:59.75,0:04:02.39,Dialogue,,0000,0000,0000,,Vật bị chôn có thể rất bình thường,
Dialogue: 0,0:04:02.39,0:04:07.41,Dialogue,,0000,0000,0000,,Nhưng đi kèm với nó là một mã số bằng chữ hay gì đó.
Dialogue: 0,0:04:07.41,0:04:08.99,Dialogue,,0000,0000,0000,,Đừng quên nhé.
Dialogue: 0,0:04:08.99,0:04:10.01,Dialogue,,0000,0000,0000,,Chỉ vậy thôi phải không?
Dialogue: 0,0:04:10.01,0:04:11.37,Dialogue,,0000,0000,0000,,Đừng có chủ quan.
Dialogue: 0,0:04:11.37,0:04:14.62,Dialogue,,0000,0000,0000,,Chẳng ai đoán trước được hành động của mấy vị khách không mời đâu.
Dialogue: 0,0:04:16.77,0:04:17.96,Dialogue,,0000,0000,0000,,Sao không vậy?
Dialogue: 0,0:04:17.96,0:04:19.09,Dialogue,,0000,0000,0000,,Im đi.
Dialogue: 0,0:04:19.78,0:04:21.01,Dialogue,,0000,0000,0000,,Dị ứng phấn hoa à?
Dialogue: 0,0:04:21.01,0:04:23.56,Dialogue,,0000,0000,0000,,Những lúc như thế này, tôi lại thấy vui khi làm mèo.
Dialogue: 0,0:04:23.56,0:04:26.19,Dialogue,,0000,0000,0000,,Theo tôi biết thì mèo cũng bị dị ứng phấn hoa đấy.
Dialogue: 0,0:04:26.19,0:04:27.04,Dialogue,,0000,0000,0000,,Có vụ đó hả?!
Dialogue: 0,0:04:27.04,0:04:28.57,Dialogue,,0000,0000,0000,,Đừng lo, Mao.
Dialogue: 0,0:04:28.57,0:04:30.53,Dialogue,,0000,0000,0000,,Phấn hoa không ảnh hưởng đến hai ta đâu.
Dialogue: 0,0:04:30.53,0:04:31.23,Dialogue,,0000,0000,0000,,Cái gì?
Dialogue: 0,0:04:31.23,0:04:35.28,Dialogue,,0000,0000,0000,,Contractor không mơ và cũng không bị dị ứng phấn hoa.
Dialogue: 0,0:04:35.96,0:04:37.24,Dialogue,,0000,0000,0000,,Cái này mới à nha.
Dialogue: 0,0:04:37.90,0:04:40.20,Dialogue,,0000,0000,0000,,Rốt cuộc thì Contractor vẫn chỉ là một lũ quái vật.
Dialogue: 0,0:04:40.20,0:04:42.11,Dialogue,,0000,0000,0000,,Có là gì thì tôi cũng chẳng thấy ngạc nhiên nữa.
Dialogue: 0,0:04:42.11,0:04:43.60,Dialogue,,0000,0000,0000,,Thật không vậy?
Dialogue: 0,0:04:43.60,0:04:44.83,Dialogue,,0000,0000,0000,,Mà Yin đâu?
Dialogue: 0,0:04:44.83,0:04:46.79,Dialogue,,0000,0000,0000,,Có lẽ nhỏ Pink đó lại đến rồi.
Dialogue: 0,0:04:47.41,0:04:48.75,Dialogue,,0000,0000,0000,,Nhỏ Pink?
Dialogue: 0,0:04:49.37,0:04:52.51,Dialogue,,0000,0000,0000,,Trong cái lần Yin chạy trốn, hai đứa nó đã quen nhau và từ đó là như thế đấy.
Dialogue: 0,0:04:53.88,0:04:55.38,Dialogue,,0000,0000,0000,,Đây.
Dialogue: 0,0:04:55.38,0:04:57.25,Dialogue,,0000,0000,0000,,Cái này hay quá phải không?
Dialogue: 0,0:04:57.25,0:04:57.80,Dialogue,,0000,0000,0000,,Ừ.
Dialogue: 0,0:04:57.80,0:05:01.20,Dialogue,,0000,0000,0000,,Lần tới mình sẽ cho cậu xem một mẩu chuyện Fan làm trên mạng.
Dialogue: 0,0:05:01.20,0:05:03.11,Dialogue,,0000,0000,0000,,Nó còn bốc hơn thế này nữa!
Dialogue: 0,0:05:03.89,0:05:06.70,Dialogue,,0000,0000,0000,,Là gì ý, moe moe thì phải...
Dialogue: 0,0:05:06.70,0:05:09.18,Dialogue,,0000,0000,0000,,Xem ra con nhỏ đang bước vào một thế giới nguy hiểm.
Dialogue: 0,0:05:09.18,0:05:11.05,Dialogue,,0000,0000,0000,,Bảo nó thôi ngay đi.
Dialogue: 0,0:05:11.05,0:05:15.65,Dialogue,,0000,0000,0000,,Nó mà để lộ thông tin cho một con nhỏ\N bình thường thì phiền lắm.
Dialogue: 0,0:05:17.95,0:05:20.09,Dialogue,,0000,0000,0000,,Xin mời, Matsumoto-san.
Dialogue: 0,0:05:20.09,0:05:21.20,Dialogue,,0000,0000,0000,,Ồ, cám ơn.
Dialogue: 0,0:05:26.15,0:05:29.00,Dialogue,,0000,0000,0000,,Saitou-san hôm nay trông chán đời quá.
Dialogue: 0,0:05:29.00,0:05:32.05,Dialogue,,0000,0000,0000,,Vì hôm nay sếp không đến được mà.
Dialogue: 0,0:05:32.05,0:05:37.01,Dialogue,,0000,0000,0000,,Chắc hẳn chàng ta đã mơ về một buổi ngắm hoa thân mật với sếp nên bây giờ mới bị mừng hụt.
Dialogue: 0,0:05:37.01,0:05:39.13,Dialogue,,0000,0000,0000,,Sao không tới luôn cho rồi chứ?
Dialogue: 0,0:05:39.13,0:05:41.55,Dialogue,,0000,0000,0000,,Mấy vụ này sếp vẫn ngờ nghệch lắm.
Dialogue: 0,0:05:41.55,0:05:43.70,Dialogue,,0000,0000,0000,,Còn phải tính đến chức vụ của họ nữa.
Dialogue: 0,0:05:43.70,0:05:46.52,Dialogue,,0000,0000,0000,,Xem ra với cậu ta thì mùa xuân còn xa lắm.
Dialogue: 0,0:05:46.52,0:05:49.82,Dialogue,,0000,0000,0000,,Nhưng vẫn có những gã như cậu thích nhắm đến\N những đồng nghiệp trẻ hơn mà.
Dialogue: 0,0:05:49.82,0:05:53.52,Dialogue,,0000,0000,0000,,Ô-Ông nói linh tinh cái gì thế, Matsumoto-san?!
Dialogue: 0,0:05:53.52,0:05:54.68,Dialogue,,0000,0000,0000,,Đây đây, nữa nhé.
Dialogue: 0,0:05:54.68,0:05:56.11,Dialogue,,0000,0000,0000,,Tôi đủ rồi.
Dialogue: 0,0:05:56.11,0:06:01.28,Dialogue,,0000,0000,0000,,Cẩn thận nhé, Otsuka, có thể chính hắn mới là kẻ đang mơ về một đêm ngắm hoa đấy.
Dialogue: 0,0:06:01.28,0:06:05.32,Dialogue,,0000,0000,0000,,Không sao đâu mà, tôi không thích những người trẻ đâu.
Dialogue: 0,0:06:05.32,0:06:07.54,Dialogue,,0000,0000,0000,,Những người tao nhã như Matsumoto-san mới thật sự quyến rũ.
Dialogue: 0,0:06:08.65,0:06:09.91,Dialogue,,0000,0000,0000,,Đùa thôi.
Dialogue: 0,0:06:14.67,0:06:16.30,Dialogue,,0000,0000,0000,,Thật lòng mà nói...
Dialogue: 0,0:06:16.89,0:06:19.66,Dialogue,,0000,0000,0000,,Tôi không thực sự chú ý đến những người con trai ngoài đời thật cho lắm...
Dialogue: 0,0:06:20.62,0:06:22.15,Dialogue,,0000,0000,0000,,Cho đến khoảnh khắc đó...
Dialogue: 0,0:06:23.21,0:06:25.15,Dialogue,,0000,0000,0000,,Đã nói rồi!
Dialogue: 0,0:06:25.15,0:06:27.66,Dialogue,,0000,0000,0000,,Anh cần phải cởi mở hơn nữa!
Dialogue: 0,0:06:27.66,0:06:32.52,Dialogue,,0000,0000,0000,,Như gã Kouno kia có thể đã biến mất\N với mấy em trong tay rồi.
Dialogue: 0,0:06:32.52,0:06:34.81,Dialogue,,0000,0000,0000,,Thiệt tình, chẳng có gì tệ hơn một con nhỏ đang say.
Dialogue: 0,0:06:34.81,0:06:38.59,Dialogue,,0000,0000,0000,,Nếu anh thích chị ấy thì hãy mau nói ra đi!
Dialogue: 0,0:06:38.59,0:06:41.96,Dialogue,,0000,0000,0000,,Ui trời, anh chẳng hiểu trái tim phụ nữ gì cả.
Dialogue: 0,0:06:41.96,0:06:45.09,Dialogue,,0000,0000,0000,,Anh phải tìm hiểu và đọc nhiều tiểu thuyết vào.
Dialogue: 0,0:06:45.09,0:06:46.76,Dialogue,,0000,0000,0000,,Tiểu thuyết? Cái mớ đó á?
Dialogue: 0,0:06:46.76,0:06:48.24,Dialogue,,0000,0000,0000,,"Cái mớ đó" là ý gì chứ?
Dialogue: 0,0:06:48.24,0:06:51.25,Dialogue,,0000,0000,0000,,Anh sẽ sáng mắt ra khi anh viết truyện nữa đấy!
Dialogue: 0,0:06:51.25,0:06:53.16,Dialogue,,0000,0000,0000,,Như là cách để hiểu trái tim người ta nè!
Dialogue: 0,0:06:53.16,0:06:55.31,Dialogue,,0000,0000,0000,,Ồ, vậy cô có viết truyện à?
Dialogue: 0,0:06:55.31,0:07:00.07,Dialogue,,0000,0000,0000,,Ui trời, Matsumoto-san à, làm tôi xấu hổ quá.
Dialogue: 0,0:07:00.07,0:07:04.40,Dialogue,,0000,0000,0000,,Nếu ông lên mạng và "Search" Mayu Mayu, chắc chắn ông sẽ thấy truyện của tôi ngay.
Dialogue: 0,0:07:04.40,0:07:05.86,Dialogue,,0000,0000,0000,,Ông có thích không?
Dialogue: 0,0:07:05.86,0:07:09.39,Dialogue,,0000,0000,0000,,Có thể trông tôi không giống lắm, nhưng tôi đã từng rất đam mê văn học đấy.
Dialogue: 0,0:07:09.39,0:07:12.89,Dialogue,,0000,0000,0000,,Tôi đã đọc rất nhiều, như những tác phẩm\N của Kamizaki hay Kanjii đó.
Dialogue: 0,0:07:12.89,0:07:16.06,Dialogue,,0000,0000,0000,,Oa, Matsumoto-san quả nhiên rất tao nhã.
Dialogue: 0,0:07:16.06,0:07:18.09,Dialogue,,0000,0000,0000,,Ừ, có lẽ...
Dialogue: 0,0:07:19.14,0:07:22.32,Dialogue,,0000,0000,0000,,Chôn bên dưới những gốc hoa anh đào \Ncó thể là một xác chết.
Dialogue: 0,0:07:22.32,0:07:24.63,Dialogue,,0000,0000,0000,,Hoặc những bí ẩn nào đó tương tự.
Dialogue: 0,0:07:27.26,0:07:28.16,Dialogue,,0000,0000,0000,,Bắt đầu thôi.
Dialogue: 0,0:07:28.75,0:07:30.66,Dialogue,,0000,0000,0000,,Một xác chết bị chôn à?
Dialogue: 0,0:07:31.49,0:07:34.66,Dialogue,,0000,0000,0000,,Ui trời, đúng ra mình không nên hỏi mấy thứ dở hơi như thế.
Dialogue: 0,0:07:38.18,0:07:41.68,Dialogue,,0000,0000,0000,,Tại sao một Tử Thần Đen như mình lại phải làm trò này nhỉ?
Dialogue: 0,0:07:48.23,0:07:49.18,Dialogue,,0000,0000,0000,,Cái này à?
Dialogue: 0,0:07:51.35,0:07:54.63,Dialogue,,0000,0000,0000,,Có thấy mật mã bằng số không, hoặc bằng chữ hay gì đó?
Dialogue: 0,0:07:54.63,0:07:55.60,Dialogue,,0000,0000,0000,,Không.
Dialogue: 0,0:07:58.96,0:08:02.19,Dialogue,,0000,0000,0000,,Nó đây nè, được viết ngay bên trên.
Dialogue: 0,0:08:02.83,0:08:05.03,Dialogue,,0000,0000,0000,,4697...
Dialogue: 0,0:08:24.97,0:08:26.59,Dialogue,,0000,0000,0000,,C-Cái gì thế?
Dialogue: 0,0:08:38.07,0:08:39.77,Dialogue,,0000,0000,0000,,B-Biến thái!
Dialogue: 0,0:08:41.21,0:08:42.93,Dialogue,,0000,0000,0000,,Đ-Đ-Đừng đến đây!
Dialogue: 0,0:08:47.24,0:08:48.73,Dialogue,,0000,0000,0000,,Nó đây rồi.
Dialogue: 0,0:08:50.19,0:08:53.19,Dialogue,,0000,0000,0000,,4697635.
Dialogue: 0,0:08:55.49,0:08:57.74,Dialogue,,0000,0000,0000,,Cô vừa nghe thấy rồi phải không?
Dialogue: 0,0:08:57.74,0:08:59.15,Dialogue,,0000,0000,0000,,N-Nghe gì cơ?
Dialogue: 0,0:08:59.15,0:09:01.00,Dialogue,,0000,0000,0000,,Dãy số 4697635!
Dialogue: 0,0:09:02.96,0:09:04.00,Dialogue,,0000,0000,0000,,Cô lại nghe thấy rồi!
Dialogue: 0,0:09:04.00,0:09:06.46,Dialogue,,0000,0000,0000,,Đâu có, tại anh tự nói mà!
Dialogue: 0,0:09:06.46,0:09:07.47,Dialogue,,0000,0000,0000,,Im mồm!
Dialogue: 0,0:09:07.47,0:09:11.25,Dialogue,,0000,0000,0000,,Chết tiệt! Giao ước của tôi không cho phép tôi giữ bí mật!
Dialogue: 0,0:09:11.25,0:09:12.58,Dialogue,,0000,0000,0000,,Giao ước?
Dialogue: 0,0:09:12.58,0:09:13.97,Dialogue,,0000,0000,0000,,Lại một cái không nên nói ra nữa rồi!
Dialogue: 0,0:09:14.43,0:09:16.59,Dialogue,,0000,0000,0000,,Cô đã biết quá nhiều rồi, tôi không thể để cô đi được.
Dialogue: 0,0:09:16.59,0:09:19.10,Dialogue,,0000,0000,0000,,T-Tôi không nhớ con số nào hết.
Dialogue: 0,0:09:19.10,0:09:21.35,Dialogue,,0000,0000,0000,,Nói dối! 4697...
Dialogue: 0,0:09:21.35,0:09:22.44,Dialogue,,0000,0000,0000,,635.
Dialogue: 0,0:09:22.44,0:09:23.93,Dialogue,,0000,0000,0000,,Thấy chưa, cô vẫn nhớ mà {cách thử dễ thương nhỉ =))}
Dialogue: 0,0:09:23.93,0:09:27.10,Dialogue,,0000,0000,0000,,T-Thì tại anh nói đi nói lại mà!
Dialogue: 0,0:09:27.10,0:09:28.43,Dialogue,,0000,0000,0000,,Đừng!
Dialogue: 0,0:09:45.09,0:09:48.73,Dialogue,,0000,0000,0000,,Tôi thậm chí còn không thể tin được những gì đã xảy ra lúc đó.
Dialogue: 0,0:09:48.73,0:09:52.96,Dialogue,,0000,0000,0000,,Tất cả những gì tôi còn nhớ là hình ảnh người con trai đã cứu mạng tôi.
Dialogue: 0,0:09:52.96,0:09:54.52,Dialogue,,0000,0000,0000,,Anh ấy thật đẹp.
Dialogue: 0,0:09:55.04,0:09:57.05,Dialogue,,0000,0000,0000,,Đặc biệt là vùng xương bả vai của anh ấy.
Dialogue: 0,0:10:00.16,0:10:03.43,Dialogue,,0000,0000,0000,,Tôi nhớ anh ấy đã nhảy múa như cơn gió.
Dialogue: 0,0:10:04.08,0:10:06.55,Dialogue,,0000,0000,0000,,Nhưng nó là điều cuối cùng tôi còn nhớ.
Dialogue: 0,0:10:11.71,0:10:13.02,Dialogue,,0000,0000,0000,,Giết cô ta rồi hả?
Dialogue: 0,0:10:13.54,0:10:16.72,Dialogue,,0000,0000,0000,,Không cần thiết. Hãy bảo họ xóa trí nhớ thôi.
Dialogue: 0,0:10:18.81,0:10:19.82,Dialogue,,0000,0000,0000,,Sao thế?
Dialogue: 0,0:10:20.53,0:10:22.30,Dialogue,,0000,0000,0000,,Bộ phận an ninh à?
Dialogue: 0,0:10:22.30,0:10:24.94,Dialogue,,0000,0000,0000,,Vậy là cô ta biết về Contractor.
Dialogue: 0,0:10:25.65,0:10:29.59,Dialogue,,0000,0000,0000,,Vậy nếu dùng M.E thì chưa chắc đã xóa sạch dấu vết.
Dialogue: 0,0:10:29.59,0:10:35.55,Dialogue,,0000,0000,0000,,Nếu là người của bộ phận an ninh, cô ta sẽ không để lộ thông tin về chúng ta ra ngoài đâu.
Dialogue: 0,0:10:35.55,0:10:37.12,Dialogue,,0000,0000,0000,,Nếu có thì sao?
Dialogue: 0,0:10:37.12,0:10:39.22,Dialogue,,0000,0000,0000,,Đến lúc đó thì không còn cách nào khác.
Dialogue: 0,0:10:40.05,0:10:42.72,Dialogue,,0000,0000,0000,,Mao, hãy chuyển món hàng về cho Huang.
Dialogue: 0,0:10:42.72,0:10:44.10,Dialogue,,0000,0000,0000,,Tôi sẽ lo liệu phần còn lại.
Dialogue: 0,0:10:44.10,0:10:45.30,Dialogue,,0000,0000,0000,,Hiểu rồi.
Dialogue: 0,0:10:54.56,0:10:55.79,Dialogue,,0000,0000,0000,,Là mơ ư?
Dialogue: 0,0:10:56.52,0:10:57.90,Dialogue,,0000,0000,0000,,Quả nhiên...
Dialogue: 0,0:10:59.27,0:11:01.22,Dialogue,,0000,0000,0000,,Tôi chỉ dám tin là như thế.
Dialogue: 0,0:11:02.13,0:11:05.76,Dialogue,,0000,0000,0000,,Nhưng không hiểu sao, trái tim tôi không ngừng thổn thức.
Dialogue: 0,0:11:05.76,0:11:07.62,Dialogue,,0000,0000,0000,,Và thế là...
Dialogue: 0,0:11:09.20,0:11:11.29,Dialogue,,0000,0000,0000,,Một câu truyện đã chảy trong tôi.
Dialogue: 0,0:11:11.82,0:11:15.47,Dialogue,,0000,0000,0000,,Trong một giấc mơ say đêm xuân...
Dialogue: 0,0:11:15.47,0:11:20.01,Dialogue,,0000,0000,0000,,Con mèo đã cho chàng trai đeo mặt nạ\N biết một mã số bí mật.
Dialogue: 0,0:11:21.60,0:11:23.85,Dialogue,,0000,0000,0000,,Mã số à?
Dialogue: 0,0:11:23.85,0:11:25.85,Dialogue,,0000,0000,0000,,Nói sao nhỉ?
Dialogue: 0,0:11:30.66,0:11:36.35,Dialogue,,0000,0000,0000,,Không hiểu sao, mã số ấy đã in rất sâu vào tâm trí tôi.
Dialogue: 0,0:11:41.49,0:11:43.31,Dialogue,,0000,0000,0000,,Hàng mất rồi?
Dialogue: 0,0:11:43.31,0:11:45.18,Dialogue,,0000,0000,0000,,Đừng có đùa!
Dialogue: 0,0:11:45.18,0:11:48.32,Dialogue,,0000,0000,0000,,Xin lỗi, có vài chuyện không ngờ tới đã xảy ra.
Dialogue: 0,0:11:49.32,0:11:52.62,Dialogue,,0000,0000,0000,,Loài mèo vào mùa này ghê gớm quá.
Dialogue: 0,0:11:59.50,0:12:01.74,Dialogue,,0000,0000,0000,,Tôi đã rất cố gắng để tìm nó, nhưng mà...
Dialogue: 0,0:12:01.74,0:12:03.94,Dialogue,,0000,0000,0000,,Đừng lo, nhất định tôi sẽ tìm ra nó.
Dialogue: 0,0:12:03.94,0:12:07.68,Dialogue,,0000,0000,0000,,Chứ còn gì nữa! Thật tình, hết người này qua người khác.
Dialogue: 0,0:12:07.68,0:12:11.47,Dialogue,,0000,0000,0000,,Mà nè Yin, đừng có chơi với con nhỏ đó nữa nhé.
Dialogue: 0,0:12:11.47,0:12:13.68,Dialogue,,0000,0000,0000,,Hoàn cảnh đâu cho phép chúng ta làm như vậy.
Dialogue: 0,0:12:13.68,0:12:17.67,Dialogue,,0000,0000,0000,,Này Huang, khó khăn lắm con bé \Nmới có bạn mà, thế nên...
Dialogue: 0,0:12:17.67,0:12:19.30,Dialogue,,0000,0000,0000,,Đừng có lằng nhằng!
Dialogue: 0,0:12:19.98,0:12:20.65,Dialogue,,0000,0000,0000,,Hiểu chưa?
Dialogue: 0,0:12:21.31,0:12:22.23,Dialogue,,0000,0000,0000,,Rồi.
Dialogue: 0,0:12:29.34,0:12:30.45,Dialogue,,0000,0000,0000,,Đây rồi!
Dialogue: 0,0:12:33.04,0:12:33.85,Dialogue,,0000,0000,0000,,Này!
Dialogue: 0,0:12:33.85,0:12:37.12,Dialogue,,0000,0000,0000,,Là của tôi mà! Tôi đã kiếm nó cả năm trời rồi.
Dialogue: 0,0:12:37.12,0:12:39.56,Dialogue,,0000,0000,0000,,Tạp chí Maurice này hiếm lắm!
Dialogue: 0,0:12:39.56,0:12:42.16,Dialogue,,0000,0000,0000,,Cô nói cái gì thế? Cuốn Maurice này đang đợi tôi mà!
Dialogue: 0,0:12:42.16,0:12:43.81,Dialogue,,0000,0000,0000,,Một cuốn sách mà cũng biết đợi người ta hả?!
Dialogue: 0,0:12:43.81,0:12:44.74,Dialogue,,0000,0000,0000,,Cô điên mất rồi!
Dialogue: 0,0:12:44.74,0:12:46.76,Dialogue,,0000,0000,0000,,Người điên là cô đó!
Dialogue: 0,0:12:50.63,0:12:52.19,Dialogue,,0000,0000,0000,,Là thật sao ạ?!
Dialogue: 0,0:12:52.19,0:12:55.76,Dialogue,,0000,0000,0000,,Chị đúng là Mayu Mayu-san đã viết "Đêm Maurice" ạ?
Dialogue: 0,0:12:55.76,0:12:56.94,Dialogue,,0000,0000,0000,,Ừ.
Dialogue: 0,0:12:56.94,0:13:02.56,Dialogue,,0000,0000,0000,,Thật không thể ngờ em lại gọi một người vĩ đại như chị là "Cục mịch" và "Con lợn".
Dialogue: 0,0:13:02.56,0:13:04.68,Dialogue,,0000,0000,0000,,Nếu bây giờ có một cái hố thì em đã muốn nhảy xuống đó rồi.
Dialogue: 0,0:13:04.68,0:13:07.90,Dialogue,,0000,0000,0000,,Không sao, không sao. Chỉ cần từ nay \Nem cẩn thận hơn là được.
Dialogue: 0,0:13:07.90,0:13:11.96,Dialogue,,0000,0000,0000,,Phải rồi, câu chuyện hôm qua về chàng trai đeo mặt nạ của chị ấn tượng lắm.
Dialogue: 0,0:13:11.96,0:13:13.91,Dialogue,,0000,0000,0000,,Ủa? Vậy là em đọc rồi à?
Dialogue: 0,0:13:13.91,0:13:15.76,Dialogue,,0000,0000,0000,,Đó là nhân vật chị nghĩ ra phải không ạ?
Dialogue: 0,0:13:15.76,0:13:18.20,Dialogue,,0000,0000,0000,,Anh ý sẽ liên quan đến Maurice thế nào vậy?
Dialogue: 0,0:13:18.20,0:13:20.83,Dialogue,,0000,0000,0000,,Ồ, cái này thì em phải đón xem mới biết.
Dialogue: 0,0:13:20.83,0:13:23.39,Dialogue,,0000,0000,0000,,Nếu chị nói cho em thì sẽ là bất công với những Fan khác.
Dialogue: 0,0:13:23.39,0:13:25.16,Dialogue,,0000,0000,0000,,Vậy sao ạ...
Dialogue: 0,0:13:25.16,0:13:29.43,Dialogue,,0000,0000,0000,,Nhưng chàng trai đeo mặt nạ với bộ xương bả vai ý thật tuyệt vời.
Dialogue: 0,0:13:29.43,0:13:30.86,Dialogue,,0000,0000,0000,,Em cũng biết một người như thế.
Dialogue: 0,0:13:30.86,0:13:31.99,Dialogue,,0000,0000,0000,,Hở? Một người đeo mặt nạ á?
Dialogue: 0,0:13:31.99,0:13:34.18,Dialogue,,0000,0000,0000,,Không, là xương bả vai.
Dialogue: 0,0:13:38.47,0:13:39.49,Dialogue,,0000,0000,0000,,Cám ơn vì bữa ăn.
Dialogue: 0,0:13:39.49,0:13:40.32,Dialogue,,0000,0000,0000,,Đến nữa nhé.
Dialogue: 0,0:13:47.80,0:13:49.03,Dialogue,,0000,0000,0000,,Bộ xương bả vai này...!
Dialogue: 0,0:13:49.03,0:13:50.90,Dialogue,,0000,0000,0000,,Dễ thương quá phải không ạ?
Dialogue: 0,0:13:51.47,0:13:52.54,Dialogue,,0000,0000,0000,,Không lẫn vào đâu được!
Dialogue: 0,0:13:53.44,0:13:54.47,Dialogue,,0000,0000,0000,,Không lẫn vào đâu được!
Dialogue: 0,0:13:54.47,0:13:56.07,Dialogue,,0000,0000,0000,,L-Lẫn cái gì cơ ạ?
Dialogue: 0,0:13:56.07,0:13:58.37,Dialogue,,0000,0000,0000,,À, không có gì.
Dialogue: 0,0:13:59.49,0:14:02.29,Dialogue,,0000,0000,0000,,Người có bộ xương bả vai đã cứu mình hôm đó...
Dialogue: 0,0:14:03.98,0:14:05.29,Dialogue,,0000,0000,0000,,Không lẫn vào đâu được.
Dialogue: 0,0:14:05.77,0:14:07.48,Dialogue,,0000,0000,0000,,Nó không phải là một giấc mơ!
Dialogue: 0,0:14:07.48,0:14:09.32,Dialogue,,0000,0000,0000,,Nó không phải là một giấc mơ!
Dialogue: 0,0:14:09.97,0:14:11.38,Dialogue,,0000,0000,0000,,Chị có sao không vậy?
Dialogue: 0,0:14:11.38,0:14:13.59,Dialogue,,0000,0000,0000,,Cho chị biết nơi ở của anh ta đi!
Dialogue: 0,0:14:14.56,0:14:17.80,Dialogue,,0000,0000,0000,,Không được! Chỉ một mình em được phép bám theo anh ý thôi!
Dialogue: 0,0:14:17.80,0:14:21.24,Dialogue,,0000,0000,0000,,Ui trời ơi, dạo này chị thấy thiếu cảm hứng quá.
Dialogue: 0,0:14:21.97,0:14:23.87,Dialogue,,0000,0000,0000,,Tệ đến thế ạ?
Dialogue: 0,0:14:23.87,0:14:29.37,Dialogue,,0000,0000,0000,,Nếu gặp được anh ta thì có lẽ chị sẽ viết được cái gì đó thú vị.
Dialogue: 0,0:14:31.48,0:14:36.90,Dialogue,,0000,0000,0000,,Đêm hôm ấy, sau khi có được thông tin, tôi đã đến khu nhà trọ Umitsuki.
Dialogue: 0,0:14:37.69,0:14:41.07,Dialogue,,0000,0000,0000,,Khao khát muốn được gặp anh ấy của tôi\N đã trở nên vô cùng mạnh mẽ.
Dialogue: 0,0:14:55.72,0:14:59.01,Dialogue,,0000,0000,0000,,Mình đang làm gì thế này?
Dialogue: 0,0:14:59.86,0:15:01.13,Dialogue,,0000,0000,0000,,Otsuka.
Dialogue: 0,0:15:03.11,0:15:04.01,Dialogue,,0000,0000,0000,,Otsuka!
Dialogue: 0,0:15:05.20,0:15:06.18,Dialogue,,0000,0000,0000,,D-Dạ!
Dialogue: 0,0:15:06.18,0:15:08.04,Dialogue,,0000,0000,0000,,Bận quá đến độ thiếu ngủ hả?
Dialogue: 0,0:15:08.04,0:15:09.39,Dialogue,,0000,0000,0000,,K-Không ạ!
Dialogue: 0,0:15:10.24,0:15:11.87,Dialogue,,0000,0000,0000,,Thật ra mình đang làm gì?
Dialogue: 0,0:15:14.35,0:15:15.72,Dialogue,,0000,0000,0000,,Liệu có phải...
Dialogue: 0,0:15:17.10,0:15:18.49,Dialogue,,0000,0000,0000,,Cảm giác này...
Dialogue: 0,0:15:26.95,0:15:28.70,Dialogue,,0000,0000,0000,,Tại sao cô ta lại theo dõi cậu?
Dialogue: 0,0:15:28.70,0:15:31.21,Dialogue,,0000,0000,0000,,Hay cô ta đã biết cậu là ai?
Dialogue: 0,0:15:31.21,0:15:33.20,Dialogue,,0000,0000,0000,,Vẫn chưa tìm thấy à?
Dialogue: 0,0:15:33.20,0:15:34.30,Dialogue,,0000,0000,0000,,Ừ.
Dialogue: 0,0:15:34.30,0:15:36.46,Dialogue,,0000,0000,0000,,Ông làm cái quái gì vậy hả?
Dialogue: 0,0:15:36.46,0:15:39.72,Dialogue,,0000,0000,0000,,Ít nhất cũng phải cố nhớ lại cái mã số chứ.
Dialogue: 0,0:15:39.72,0:15:41.98,Dialogue,,0000,0000,0000,,Tôi có nhớ nhưng chỉ một phần thôi.
Dialogue: 0,0:15:41.98,0:15:43.56,Dialogue,,0000,0000,0000,,4697...
Dialogue: 0,0:15:43.56,0:15:45.82,Dialogue,,0000,0000,0000,,4697635.
Dialogue: 0,0:15:46.89,0:15:48.85,Dialogue,,0000,0000,0000,,Yin, vừa nói gì thế?
Dialogue: 0,0:15:48.85,0:15:52.00,Dialogue,,0000,0000,0000,,4697635.
Dialogue: 0,0:15:52.00,0:15:53.39,Dialogue,,0000,0000,0000,,Mã số.
Dialogue: 0,0:15:53.39,0:15:57.75,Dialogue,,0000,0000,0000,,Jun, người đã nhận mã số từ một chàng trai đeo mặt nạ...
Dialogue: 0,0:15:57.75,0:16:01.95,Dialogue,,0000,0000,0000,,đã chạy hết tốc lực đến sở thú, nơi Maurice bị bắt cóc.
Dialogue: 0,0:16:01.95,0:16:03.84,Dialogue,,0000,0000,0000,,Và sau đó anh ta hét lên...
Dialogue: 0,0:16:03.84,0:16:07.37,Dialogue,,0000,0000,0000,,"Maurice, tôi thật sự cần anh!"
Dialogue: 0,0:16:07.37,0:16:10.19,Dialogue,,0000,0000,0000,,Yin, cái đó là gì thế?
Dialogue: 0,0:16:10.19,0:16:13.00,Dialogue,,0000,0000,0000,,Con người và voi có thể yêu nhau.
Dialogue: 0,0:16:13.00,0:16:15.22,Dialogue,,0000,0000,0000,,Có thể nó là mối tình ngang trái.
Dialogue: 0,0:16:15.22,0:16:18.97,Dialogue,,0000,0000,0000,,Nhưng Maurice, tôi sẵn sàng dành cả cuộc đời cho mối tình ấy.
Dialogue: 0,0:16:19.88,0:16:22.26,Dialogue,,0000,0000,0000,,"Đêm Maurice"... đây rồi!
Dialogue: 0,0:16:23.16,0:16:24.13,Dialogue,,0000,0000,0000,,Cái gì đây?
Dialogue: 0,0:16:24.71,0:16:27.63,Dialogue,,0000,0000,0000,,Anh nói mã số ở trong đây hả?
Dialogue: 0,0:16:27.63,0:16:30.60,Dialogue,,0000,0000,0000,,Tôi vừa bảo Kouno đi xác minh rồi.
Dialogue: 0,0:16:30.60,0:16:33.83,Dialogue,,0000,0000,0000,,Chính xác! Nó đúng là mã số của chiếc két.
Dialogue: 0,0:16:33.83,0:16:35.52,Dialogue,,0000,0000,0000,,Có điều có người đã đến trước chúng ta.
Dialogue: 0,0:16:35.52,0:16:36.69,Dialogue,,0000,0000,0000,,Vậy là trễ mất rồi!
Dialogue: 0,0:16:36.69,0:16:38.93,Dialogue,,0000,0000,0000,,Nhưng tại sao mã số lại ở đây?
Dialogue: 0,0:16:38.93,0:16:42.53,Dialogue,,0000,0000,0000,,Tôi không biết, nhưng tôi nghe nói đây là câu truyện cô ấy viết.
Dialogue: 0,0:16:42.53,0:16:43.36,Dialogue,,0000,0000,0000,,Câu truyện?
Dialogue: 0,0:16:43.36,0:16:45.18,Dialogue,,0000,0000,0000,,Vậy là Matsumoto-san đọc rồi à?
Dialogue: 0,0:16:45.18,0:16:46.45,Dialogue,,0000,0000,0000,,Một chút.
Dialogue: 0,0:16:46.45,0:16:48.75,Dialogue,,0000,0000,0000,,Trong đây còn nhắc đến một người mang mặt nạ.
Dialogue: 0,0:16:49.48,0:16:51.91,Dialogue,,0000,0000,0000,,Nếu đó là về BK-201 thì...
Dialogue: 0,0:16:51.91,0:16:55.02,Dialogue,,0000,0000,0000,,Tôi dám chắc là Otsuka chưa từng gặp hắn, nhưng mà...
Dialogue: 0,0:16:55.02,0:16:57.67,Dialogue,,0000,0000,0000,,Có thể cô ấy đã lấy thông tin từ một nguồn nào khác.
Dialogue: 0,0:16:57.67,0:16:59.90,Dialogue,,0000,0000,0000,,Nhưng nếu hành động quá khinh suất\N thì sẽ rất nguy hiểm.
Dialogue: 0,0:17:06.88,0:17:10.80,Dialogue,,0000,0000,0000,,Được rồi, chúng ta đã có món hàng, nhưng thông tin đã bị rò rỉ.
Dialogue: 0,0:17:10.80,0:17:13.39,Dialogue,,0000,0000,0000,,Mày cũng đang bị theo đuôi rồi.
Dialogue: 0,0:17:13.39,0:17:15.39,Dialogue,,0000,0000,0000,,Đã biết phải làm gì rồi chứ?
Dialogue: 0,0:17:15.97,0:17:17.06,Dialogue,,0000,0000,0000,,Ừ.
Dialogue: 0,0:17:17.54,0:17:18.35,Dialogue,,0000,0000,0000,,À há.
Dialogue: 0,0:17:18.35,0:17:20.03,Dialogue,,0000,0000,0000,,Nó đây rồi!
Dialogue: 0,0:17:43.92,0:17:45.19,Dialogue,,0000,0000,0000,,Mất dấu á?
Dialogue: 0,0:17:45.19,0:17:46.17,Dialogue,,0000,0000,0000,,Cậu đang làm cái quái gì vậy?
Dialogue: 0,0:17:52.43,0:17:53.81,Dialogue,,0000,0000,0000,,Anh là...
Dialogue: 0,0:17:55.21,0:17:56.81,Dialogue,,0000,0000,0000,,Otsuka! Lên đi!
Dialogue: 0,0:17:56.81,0:17:58.50,Dialogue,,0000,0000,0000,,Đội trưởng, tại sao?
Dialogue: 0,0:17:58.50,0:18:00.48,Dialogue,,0000,0000,0000,,Hắn là Contractor đang muốn giết cô đấy!
Dialogue: 0,0:18:00.48,0:18:02.93,Dialogue,,0000,0000,0000,,Contractor? Nhưng anh ấy đã cứu tôi mà...
Dialogue: 0,0:18:02.93,0:18:03.82,Dialogue,,0000,0000,0000,,Đừng nói nữa! Lên xe mau!
Dialogue: 0,0:18:20.35,0:18:21.08,Dialogue,,0000,0000,0000,,Đội trưởng!
Dialogue: 0,0:18:22.17,0:18:23.83,Dialogue,,0000,0000,0000,,Đồ ngốc! Qua đây!
Dialogue: 0,0:18:27.18,0:18:28.57,Dialogue,,0000,0000,0000,,Chuyện gì đang xảy ra vậy?
Dialogue: 0,0:18:28.57,0:18:31.57,Dialogue,,0000,0000,0000,,Là Tử Thần Đen BK-201.
Dialogue: 0,0:18:31.57,0:18:33.16,Dialogue,,0000,0000,0000,,BK-201?
Dialogue: 0,0:18:33.16,0:18:34.80,Dialogue,,0000,0000,0000,,Cô theo dõi hắn mà chẳng biết cái này hả?
Dialogue: 0,0:18:34.80,0:18:37.75,Dialogue,,0000,0000,0000,,Nếu biết thì tôi đâu có viết mẩu chuyện ấy.
Dialogue: 0,0:18:37.75,0:18:40.89,Dialogue,,0000,0000,0000,,Ít nhất thì nhìn cái mặt nạ cô cũng phải nghi ngờ chứ!
Dialogue: 0,0:18:40.89,0:18:42.82,Dialogue,,0000,0000,0000,,Cái mặt nạ thì có liên quan gì!
Dialogue: 0,0:18:42.82,0:18:44.39,Dialogue,,0000,0000,0000,,Yêu là mù quáng mà!
Dialogue: 0,0:18:45.06,0:18:46.02,Dialogue,,0000,0000,0000,,Yêu?
Dialogue: 0,0:18:46.02,0:18:50.15,Dialogue,,0000,0000,0000,,Đúng vậy. Saitou-san cứ bận tâm đến chức vụ của mình...
Dialogue: 0,0:18:50.15,0:18:53.74,Dialogue,,0000,0000,0000,,mà không thể bày tỏ tình yêu, như vậy\N không thể gọi là yêu được!
Dialogue: 0,0:18:54.44,0:18:55.96,Dialogue,,0000,0000,0000,,Cô đang nói gì thế?
Dialogue: 0,0:18:57.03,0:18:58.24,Dialogue,,0000,0000,0000,,Cúi xuống!
Dialogue: 0,0:19:02.91,0:19:03.73,Dialogue,,0000,0000,0000,,Gọi cứu viện thôi!
Dialogue: 0,0:19:03.73,0:19:06.68,Dialogue,,0000,0000,0000,,Không kịp đâu! Saitou, mau dẫn Otsuka chạy đi!
Dialogue: 0,0:19:06.68,0:19:08.00,Dialogue,,0000,0000,0000,,Tôi sẽ cầm chân hắn!
Dialogue: 0,0:19:08.00,0:19:09.83,Dialogue,,0000,0000,0000,,Không thể được!
Dialogue: 0,0:19:09.83,0:19:12.09,Dialogue,,0000,0000,0000,,Tôi không thể bỏ mặc người tôi yê—
Dialogue: 0,0:19:14.76,0:19:16.67,Dialogue,,0000,0000,0000,,Tôi yêu chị!
Dialogue: 0,0:19:16.67,0:19:17.30,Dialogue,,0000,0000,0000,,Saitou!
Dialogue: 0,0:19:29.44,0:19:30.44,Dialogue,,0000,0000,0000,,Saitou!
Dialogue: 0,0:19:42.64,0:19:44.70,Dialogue,,0000,0000,0000,,Li... kun...
Dialogue: 0,0:19:47.55,0:19:48.84,Dialogue,,0000,0000,0000,,Hei!
Dialogue: 0,0:19:49.58,0:19:51.68,Dialogue,,0000,0000,0000,,Tôi tìm thấy rồi, Hei!
Dialogue: 0,0:20:11.80,0:20:13.75,Dialogue,,0000,0000,0000,,C-Cái gì thế này?
Dialogue: 0,0:20:16.01,0:20:20.95,Dialogue,,0000,0000,0000,,Lạ thay, không có ai nhớ gì về những chuyện \Nđã xảy ra đêm hôm đó.
Dialogue: 0,0:20:20.95,0:20:24.28,Dialogue,,0000,0000,0000,,Nhưng xem ra không chỉ có mình tôi muốn biết.
Dialogue: 0,0:20:24.28,0:20:28.66,Dialogue,,0000,0000,0000,,Nó cứ như cảm giác có một vật gì đó\N mắc nghẹn trong cổ họng vậy.
Dialogue: 0,0:20:28.66,0:20:30.83,Dialogue,,0000,0000,0000,,Chị không nhớ được à, đội trưởng?
Dialogue: 0,0:20:30.83,0:20:36.02,Dialogue,,0000,0000,0000,,Chắc chắn là tôi đã nói một cái gì đó rất quan trọng với chị mà.
Dialogue: 0,0:20:40.51,0:20:42.33,Dialogue,,0000,0000,0000,,Xin lỗi, tôi không nhớ.
Dialogue: 0,0:20:43.62,0:20:47.80,Dialogue,,0000,0000,0000,,Có điều... tôi nghĩ nó là một chuyện khá quan trọng.
Dialogue: 0,0:20:48.51,0:20:51.58,Dialogue,,0000,0000,0000,,Tuy nhiên, có một chuyện đã rất rõ ràng.
Dialogue: 0,0:20:51.58,0:20:55.31,Dialogue,,0000,0000,0000,,Chứng dị ứng của tôi đã hoàn toàn khỏi hẳn.
Dialogue: 0,0:20:56.19,0:21:01.03,Dialogue,,0000,0000,0000,,Tôi không hiểu vì sao, nhưng chắc chắn tôi sẽ có một mùa xuân thật đẹp.
Dialogue: 0,0:21:01.60,0:21:02.98,Dialogue,,0000,0000,0000,,Thuộc chữa dị ứng á?
Dialogue: 0,0:21:02.98,0:21:06.91,Dialogue,,0000,0000,0000,,Ừ, xem ra nó được nghiên cứu bởi bộ phận\N hóa sinh bên trong Cánh Cổng.
Dialogue: 0,0:21:06.91,0:21:10.34,Dialogue,,0000,0000,0000,,Nếu tất cả êm xuôi, lẽ ra họ đã hoàn thành rồi.
Dialogue: 0,0:21:10.34,0:21:12.69,Dialogue,,0000,0000,0000,,Vậy ra là mớ chất lỏng đó à?
Dialogue: 0,0:21:12.69,0:21:16.15,Dialogue,,0000,0000,0000,,Ừ, nhưng nó có một tác dụng phụ.
Dialogue: 0,0:21:16.15,0:21:19.67,Dialogue,,0000,0000,0000,,Người xài nó sẽ mất một phần nhỏ ký ức.
Dialogue: 0,0:21:19.67,0:21:23.17,Dialogue,,0000,0000,0000,,Thật đáng tiếc, nhưng xem ra phải đợi một thời gian nữa\N trước khi nó chính thức được đưa vào sử dụng.
Dialogue: 0,0:21:24.35,0:21:28.61,Dialogue,,0000,0000,0000,,Này, Huang, Hei và tôi không bị mất ký ức.
Dialogue: 0,0:21:28.61,0:21:33.74,Dialogue,,0000,0000,0000,,Vậy là những Contractor sẽ không bị dị ứng phấn hoa phải không?
Dialogue: 0,0:21:33.74,0:21:37.06,Dialogue,,0000,0000,0000,,Ai mà biết chứ? Contractor mấy người là cái giống quái đản mà.
Dialogue: 0,0:21:37.06,0:21:38.98,Dialogue,,0000,0000,0000,,Ồ, con nhỏ Pink kìa.
Dialogue: 0,0:21:38.98,0:21:41.87,Dialogue,,0000,0000,0000,,Chắc hẳn là đang đến chỗ Yin đấy.
Dialogue: 0,0:21:42.61,0:21:44.23,Dialogue,,0000,0000,0000,,Này, Huang.
Dialogue: 0,0:21:44.23,0:21:48.78,Dialogue,,0000,0000,0000,,Yin lần này đã có công giúp chúng ta tìm ra mã số.
Dialogue: 0,0:21:48.78,0:21:50.62,Dialogue,,0000,0000,0000,,Ờ, muốn làm gì thì làm.
Dialogue: 0,0:21:50.62,0:21:52.89,Dialogue,,0000,0000,0000,,Tốt quá rồi nhỉ, Yin?
Dialogue: 0,0:21:52.89,0:21:54.05,Dialogue,,0000,0000,0000,,Ừ.
Dialogue: 0,0:22:01.13,0:22:03.13,Dialogue,,0000,0000,0000,,Không thể nào đâu nhỉ?
Dialogue: 0,0:22:05.40,0:22:08.23,Dialogue,,0000,0000,0000,,Hôm nay cô ấy không đến à...
