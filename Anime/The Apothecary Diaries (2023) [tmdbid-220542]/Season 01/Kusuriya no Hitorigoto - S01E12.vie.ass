Dialogue: 0,0:00:01.62,0:00:04.83,Default,,0,0,0,,NGUYÊN TÁC: HYUUGA NATSU
Dialogue: 0,0:01:31.00,0:01:32.92,Default,,0,0,0,,CUNG PHỈ THÚY - MIÊU MIÊU
Dialogue: 0,0:01:34.76,0:01:36.13,Default,,0,0,0,,Ta nên làm sao đây?
Dialogue: 0,0:01:37.01,0:01:38.34,Default,,0,0,0,,Ngài quyết định thế nào?
Dialogue: 0,0:01:38.43,0:01:39.26,Default,,0,0,0,,TÁC PHẨM NÀY LÀ HƯ CẤU, TẤT CẢ TÊN NHÂN\NVẬT, TỔ CHỨC ĐỀU LÀ SẢN PHẨM TƯỞNG TƯỢNG.
Dialogue: 0,0:01:39.34,0:01:40.18,Default,,0,0,0,,NGOÀI RA, CÂU CHUYỆN KHÔNG LIÊN QUAN\NTỚI CÁC SỰ KIỆN VÀ SỰ VIỆC NGOÀI ĐỜI THỰC.
Dialogue: 0,0:01:40.97,0:01:42.10,Default,,0,0,0,,{\i1}Sau vụ của Phong Minh,{\i}
Dialogue: 0,0:01:42.81,0:01:45.43,Default,,0,0,0,,{\i1}thân nhân của bà ta đã bị tịch thu tài sản{\i}
Dialogue: 0,0:01:45.52,0:01:48.81,Default,,0,0,0,,{\i1}và phải chịu nhiều hình phạt{\i}\N{\i1}tra tấn khác nhau.{\i}
Dialogue: 0,0:01:50.56,0:01:53.90,Default,,0,0,0,,{\i1}Hành vi phạm tội được xác định{\i}\N{\i1}là do một mình Phong Minh thực hiện.{\i}
Dialogue: 0,0:01:53.98,0:01:57.36,Default,,0,0,0,,{\i1}Thật may khi chủ nhân của bà ta,{\i}\N{\i1}A Đa nương nương không bị thẩm vấn.{\i}
Dialogue: 0,0:01:59.57,0:02:00.49,Default,,0,0,0,,{\i1}Còn giờ,{\i}
Dialogue: 0,0:02:01.07,0:02:05.29,Default,,0,0,0,,{\i1}ta đã có trong tay danh sách gia tộc{\i}\N{\i1}của Phong Minh và những người liên quan.{\i}
Dialogue: 0,0:02:05.37,0:02:09.87,Default,,0,0,0,,Danh sách này bao gồm những khách hàng\Ncó giao thiệp làm ăn với gia tộc đó.
Dialogue: 0,0:02:09.96,0:02:12.71,Default,,0,0,0,,Hóa ra họ làm rất nhiều mảng,\Nkhông chỉ là nuôi ong.
Dialogue: 0,0:02:12.79,0:02:14.92,Default,,0,0,0,,Trong hậu cung này, có 80 người
Dialogue: 0,0:02:15.00,0:02:16.55,Default,,0,0,0,,có liên quan đến họ.
Dialogue: 0,0:02:16.63,0:02:19.18,Default,,0,0,0,,Tám mươi trên tổng số 2.000 người sao?
Dialogue: 0,0:02:20.14,0:02:21.97,Default,,0,0,0,,Số lượng đáng kể đây.
Dialogue: 0,0:02:22.05,0:02:24.72,Default,,0,0,0,,CUNG PHỈ THÚY - MIÊU MIÊU
Dialogue: 0,0:02:25.56,0:02:28.39,Default,,0,0,0,,{\i1}Nhóm người mua lại{\i}\N{\i1}nữ dược sư ấy từ tay lũ bắt cóc{\i}
Dialogue: 0,0:02:28.48,0:02:30.73,Default,,0,0,0,,{\i1}cũng có liên hệ với gia tộc này.{\i}
Dialogue: 0,0:02:30.81,0:02:33.52,Default,,0,0,0,,Chúng ta có thể\Ném nhẹm chuyện này nếu ngài muốn.
Dialogue: 0,0:02:34.15,0:02:35.82,Default,,0,0,0,,{\i1}"Nếu ngài muốn."{\i}
Dialogue: 0,0:02:36.57,0:02:37.94,Default,,0,0,0,,{\i1}Tất nhiên là vậy rồi.{\i}
Dialogue: 0,0:02:39.15,0:02:41.32,Default,,0,0,0,,{\i1}Không cần biết đúng sai,{\i}
Dialogue: 0,0:02:41.41,0:02:43.53,Default,,0,0,0,,{\i1}chỉ cần mình ra lệnh thì sẽ thành sự thật.{\i}
Dialogue: 0,0:02:44.41,0:02:47.16,Default,,0,0,0,,{\i1}Nô tì ấy hiểu rõ ranh giới{\i}\N{\i1}giữa dân thường và quan lại.{\i}
Dialogue: 0,0:02:47.79,0:02:50.33,Default,,0,0,0,,{\i1}Cô ấy sẽ tuân theo{\i}\N{\i1}mọi mệnh lệnh được giao.{\i}
Dialogue: 0,0:02:55.21,0:02:57.59,Default,,0,0,0,,{\i1}Việc ra lệnh này quá dễ đối với mình.{\i}
Dialogue: 0,0:02:57.67,0:02:59.63,Default,,0,0,0,,{\i1}Chỉ là không dễ để đưa ra quyết định.{\i}
Dialogue: 0,0:03:00.30,0:03:04.22,Default,,0,0,0,,{\i1}Nếu ém nhẹm vụ này,{\i}\N{\i1}mình có thể giữ cô ấy ở lại trong cung.{\i}
Dialogue: 0,0:03:04.30,0:03:09.64,Default,,0,0,0,,{\i1}Nhưng nếu cô ấy không muốn vậy thì sao?{\i}
Dialogue: 0,0:03:09.73,0:03:12.56,Default,,0,0,0,,{\i1}Nếu cô ấy phát hiện{\i}\N{\i1}mình bị ép ở lại nơi mình không muốn,{\i}
Dialogue: 0,0:03:13.65,0:03:15.57,Default,,0,0,0,,{\i1}cô ấy sẽ có phản ứng thế nào?{\i}
Dialogue: 0,0:03:19.57,0:03:21.40,Default,,0,0,0,,{\i1}Mình lo rằng khoảng cách{\i}
Dialogue: 0,0:03:21.49,0:03:24.41,Default,,0,0,0,,{\i1}giữa mình và cô ấy sẽ ngày một xa hơn.{\i}
Dialogue: 0,0:03:25.99,0:03:27.04,Default,,0,0,0,,Ngài Nhâm Thị.
Dialogue: 0,0:03:28.49,0:03:31.16,Default,,0,0,0,,Chẳng phải cô ấy\Nchỉ là một quân cờ thôi sao?
Dialogue: 0,0:03:35.79,0:03:38.21,Default,,0,0,0,,- Sa thải hàng loạt sao?\N- Đúng vậy.
Dialogue: 0,0:03:38.30,0:03:41.05,Default,,0,0,0,,Tất cả ái nữ trong gia tộc\Ncó mối liên hệ làm ăn
Dialogue: 0,0:03:41.13,0:03:43.55,Default,,0,0,0,,với gia tộc đó đều bị trả về nhà.
Dialogue: 0,0:03:43.64,0:03:46.97,Default,,0,0,0,,Số người bị sa thải sẽ nhiều lắm đó.
Dialogue: 0,0:03:47.06,0:03:48.39,Default,,0,0,0,,Vậy sao…
Dialogue: 0,0:03:48.47,0:03:52.64,Default,,0,0,0,,Rất nhiều cô gái đang phát hoảng\Nvì đột nhiên bị trả về nhà.
Dialogue: 0,0:03:52.73,0:03:55.31,Default,,0,0,0,,Có vẻ gia tộc đó\Nđã giao thương với rất nhiều người.
Dialogue: 0,0:03:56.69,0:03:58.61,Default,,0,0,0,,{\i1}Mình có dự cảm chẳng lành về vụ này.{\i}
Dialogue: 0,0:03:59.32,0:04:02.15,Default,,0,0,0,,{\i1}Giờ mà mình bị sa thải{\i}\N{\i1}thì sẽ gặp rắc rối mất.{\i}
Dialogue: 0,0:04:02.24,0:04:03.49,Default,,0,0,0,,{\i1}Không phải lúc này.{\i}
Dialogue: 0,0:04:03.57,0:04:04.53,Default,,0,0,0,,{\i1}Ngoài Lí Bạch ra,{\i}
Dialogue: 0,0:04:04.61,0:04:08.87,Default,,0,0,0,,{\i1}mình vẫn chưa dẫn được{\i}\N{\i1}vị khách giàu sụ nào về cho lão tú bà.{\i}
Dialogue: 0,0:04:08.95,0:04:10.12,Default,,0,0,0,,{\i1}Nếu giờ mình mà trở về…{\i}
Dialogue: 0,0:04:10.75,0:04:11.91,Default,,0,0,0,,Con về rồi!
Dialogue: 0,0:04:12.96,0:04:14.50,Default,,0,0,0,,Khách hàng của con đây!
Dialogue: 0,0:04:15.33,0:04:17.50,Default,,0,0,0,,{\i1}Chắc chắn mình sẽ bị bán đi mất!{\i}
Dialogue: 0,0:04:18.96,0:04:19.80,Default,,0,0,0,,Miêu Miêu?
Dialogue: 0,0:04:26.47,0:04:30.43,Default,,0,0,0,,{\i1}Lần trước kiểm tra,{\i}\N{\i1}mình thấy tên mình được đăng ký dưới tên{\i}
Dialogue: 0,0:04:30.52,0:04:33.56,Default,,0,0,0,,{\i1}của một gia đình thương gia{\i}\N{\i1}chuyên kinh doanh buôn bán.{\i}
Dialogue: 0,0:04:41.82,0:04:43.90,Default,,0,0,0,,{\i1}Nếu gia tộc Phong Minh làm nghề nuôi ong,{\i}
Dialogue: 0,0:04:44.57,0:04:46.03,Default,,0,0,0,,{\i1}có thể họ sẽ có{\i}
Dialogue: 0,0:04:46.70,0:04:47.62,Default,,0,0,0,,{\i1}giao thương với nhau!{\i}
Dialogue: 0,0:05:31.24,0:05:32.29,Default,,0,0,0,,Ngài Nhâm Thị!
Dialogue: 0,0:05:43.67,0:05:46.17,Default,,0,0,0,,Hiếm khi thấy ngươi\Nthở không ra hơi như vậy.
Dialogue: 0,0:05:47.30,0:05:50.22,Default,,0,0,0,,- Chuyện là…\N- Bình tĩnh đã nào. Đỏ hết cả mặt rồi kìa.
Dialogue: 0,0:05:50.97,0:05:52.72,Default,,0,0,0,,Nô tì có chuyện muốn nói với ngài.
Dialogue: 0,0:05:53.72,0:05:56.48,Default,,0,0,0,,Được. Vào trong rồi nói.
Dialogue: 0,0:05:58.81,0:06:00.73,Default,,0,0,0,,Về vụ sa thải hàng loạt phải không?
Dialogue: 0,0:06:00.81,0:06:01.98,Default,,0,0,0,,Vâng.
Dialogue: 0,0:06:02.69,0:06:06.03,Default,,0,0,0,,- Nô tì sẽ ra sao ạ?\N- Đây là danh sách.
Dialogue: 0,0:06:06.69,0:06:08.45,Default,,0,0,0,,CUNG PHỈ THÚY - MIÊU MIÊU
Dialogue: 0,0:06:09.36,0:06:11.95,Default,,0,0,0,,Vậy là nô tì sẽ bị sa thải ạ?
Dialogue: 0,0:06:13.79,0:06:14.66,Default,,0,0,0,,Ngươi muốn thế nào?
Dialogue: 0,0:06:20.08,0:06:22.17,Default,,0,0,0,,Chẳng phải cô ấy\Nchỉ là một quân cờ thôi sao?
Dialogue: 0,0:06:26.84,0:06:29.47,Default,,0,0,0,,{\i1}Kể từ khi được làm thị nữ{\i}\N{\i1}của Ngọc Diệp nương nương,{\i}
Dialogue: 0,0:06:29.55,0:06:32.89,Default,,0,0,0,,{\i1}mình đã được thử độc,{\i}\N{\i1}và còn được sử dụng Thái y viện.{\i}
Dialogue: 0,0:06:32.97,0:06:35.77,Default,,0,0,0,,{\i1}Mình đã tận hưởng cuộc sống hiện tại.{\i}
Dialogue: 0,0:06:37.10,0:06:39.98,Default,,0,0,0,,{\i1}Nhưng mình chỉ là một cung nữ.{\i}
Dialogue: 0,0:06:40.06,0:06:43.27,Default,,0,0,0,,{\i1}Mình không có tư cách gì{\i}\N{\i1}để xin cho bản thân không bị sa thải.{\i}
Dialogue: 0,0:06:44.36,0:06:47.03,Default,,0,0,0,,{\i1}Không thể tỏ ra là mình đang cầu xin được…{\i}
Dialogue: 0,0:06:48.40,0:06:50.45,Default,,0,0,0,,Nô tì chỉ là một cung nữ.
Dialogue: 0,0:06:51.03,0:06:53.53,Default,,0,0,0,,Dù là những việc lặt vặt,\Nnấu ăn hay thử độc,
Dialogue: 0,0:06:53.62,0:06:57.45,Default,,0,0,0,,chỉ cần ngài ra lệnh,\Nnô tì xin tuân theo hết.
Dialogue: 0,0:06:58.62,0:06:59.83,Default,,0,0,0,,{\i1}"Chỉ cần ngài ra lệnh…"{\i}
Dialogue: 0,0:07:00.54,0:07:01.54,Default,,0,0,0,,{\i1}Đúng vậy.{\i}
Dialogue: 0,0:07:01.62,0:07:04.75,Default,,0,0,0,,{\i1}Chỉ cần là mệnh lệnh{\i}\N{\i1}thì mình không thể làm trái.{\i}
Dialogue: 0,0:07:04.84,0:07:07.84,Default,,0,0,0,,{\i1}Mình sẽ không than vãn nửa lời{\i}\N{\i1}dù có bị hạ lương đi nữa.{\i}
Dialogue: 0,0:07:07.92,0:07:11.59,Default,,0,0,0,,{\i1}Chỉ cần có thêm chút thời gian{\i}\N{\i1}trước khi mình bị bán đi là đủ rồi.{\i}
Dialogue: 0,0:07:14.01,0:07:16.39,Default,,0,0,0,,{\i1}Vậy nên, xin đừng sa thải nô tì!{\i}
Dialogue: 0,0:07:19.43,0:07:20.48,Default,,0,0,0,,Ta hiểu rồi.
Dialogue: 0,0:07:21.06,0:07:21.89,Default,,0,0,0,,Vậy là…
Dialogue: 0,0:07:22.98,0:07:24.40,Default,,0,0,0,,Ta sẽ ban nhiều tiền nhất có thể.
Dialogue: 0,0:07:26.65,0:07:29.57,Default,,0,0,0,,- Ơ kìa…\N{\i1}- Thương lượng thất bại.{\i}
Dialogue: 0,0:07:29.65,0:07:31.65,Default,,0,0,0,,{\i1}Miêu Miêu đã bị sa thải.{\i}
Dialogue: 0,0:07:33.82,0:07:35.41,Default,,0,0,0,,Được rồi.
Dialogue: 0,0:07:43.79,0:07:46.42,Default,,0,0,0,,Ngài định như vậy bao lâu nữa?
Dialogue: 0,0:07:48.09,0:07:50.72,Default,,0,0,0,,Ngài nên ngăn cô ấy lại mới phải.
Dialogue: 0,0:07:50.80,0:07:51.80,Default,,0,0,0,,Đừng nói thêm gì nữa.
Dialogue: 0,0:07:54.43,0:07:56.26,Default,,0,0,0,,{\i1}Một tuần sau khi bị sa thải,{\i}
Dialogue: 0,0:07:56.89,0:07:59.77,Default,,0,0,0,,{\i1}Tiểu Miêu đã trở lại phố đèn đỏ.{\i}
Dialogue: 0,0:08:00.64,0:08:02.23,Default,,0,0,0,,{\i1}Mình nghe nói cô ấy rất lễ phép,{\i}
Dialogue: 0,0:08:02.31,0:08:06.52,Default,,0,0,0,,{\i1}đến chào tạm biệt từng người{\i}\N{\i1}đã chăm sóc cho mình.{\i}
Dialogue: 0,0:08:07.44,0:08:09.32,Default,,0,0,0,,Ngài mà hối hận là ta mặc kệ đấy nhé.
Dialogue: 0,0:08:10.11,0:08:13.11,Default,,0,0,0,,{\i1}Ngài ấy mất đi món đồ chơi yêu thích.{\i}
Dialogue: 0,0:08:13.20,0:08:16.82,Default,,0,0,0,,{\i1}Sẽ khó mà tìm được{\i}\N{\i1}một món đồ chơi thú vị khác để thay thế.{\i}
Dialogue: 0,0:08:18.33,0:08:19.83,Default,,0,0,0,,Ta muốn cái đó cơ!
Dialogue: 0,0:08:20.87,0:08:22.37,Default,,0,0,0,,{\i1}Mà không.{\i}
Dialogue: 0,0:08:22.46,0:08:26.08,Default,,0,0,0,,{\i1}Có lẽ cô gái đó{\i}\N{\i1}không phải một món đồ chơi.{\i}
Dialogue: 0,0:08:27.04,0:08:30.71,Default,,0,0,0,,{\i1}Ngài ấy không bắt cô ấy ở lại{\i}\N{\i1}vì không muốn lợi dụng cô ấy.{\i}
Dialogue: 0,0:08:31.76,0:08:35.51,Default,,0,0,0,,{\i1}Chủ nhân của mình thật phiền phức.{\i}\N{\i1}Lại phải lo liệu một đống việc cho xem.{\i}
Dialogue: 0,0:08:35.59,0:08:37.22,Default,,0,0,0,,{\i1}Nếu mình không tìm được món thay thế…{\i}
Dialogue: 0,0:08:38.10,0:08:40.72,Default,,0,0,0,,{\i1}Có lẽ mình nên hỏi thử tên quan võ đó.{\i}
Dialogue: 0,0:08:41.39,0:08:44.98,Default,,0,0,0,,Ta chán, ta dỗi, ta u sầu…
Dialogue: 0,0:08:51.57,0:08:54.49,Default,,0,0,0,,Thấy chưa, không có tàn nhang\Ntrông em xinh hơn bao nhiêu!
Dialogue: 0,0:08:54.57,0:08:57.49,Default,,0,0,0,,Ta sẽ cho em mượn son.
Dialogue: 0,0:08:57.57,0:09:01.20,Default,,0,0,0,,Ta chưa bao giờ tưởng tượng sẽ có ngày\Nđược cùng Miêu Miêu phục vụ tiệc…
Dialogue: 0,0:09:01.83,0:09:03.25,Default,,0,0,0,,{\i1}Công việc của chúng tôi đêm nay{\i}
Dialogue: 0,0:09:03.33,0:09:06.37,Default,,0,0,0,,{\i1}là phục vụ trong tiệc của nhóm quý tộc{\i}\N{\i1}được tổ chức bên ngoài kỹ viện.{\i}
Dialogue: 0,0:09:06.46,0:09:09.79,Default,,0,0,0,,{\i1}Mời các kỹ nữ đến tư gia{\i}\N{\i1}tiêu tốn rất nhiều tiền.{\i}
Dialogue: 0,0:09:09.88,0:09:10.71,Default,,0,0,0,,{\i1}Chưa kể,{\i}
Dialogue: 0,0:09:11.50,0:09:15.22,Default,,0,0,0,,{\i1}một đêm vui vẻ tiêu tốn một năm lương bổng{\i}\N{\i1}của một người bình thường.{\i}
Dialogue: 0,0:09:15.30,0:09:18.72,Default,,0,0,0,,{\i1}Vậy mà có người mời cùng lúc{\i}\N{\i1}cả ba hồng bài của Lục Thanh quán…{\i}
Dialogue: 0,0:09:19.47,0:09:22.22,Default,,0,0,0,,{\i1}Phải nói là có người{\i}\N{\i1}thực sự vô cùng giàu có đó.{\i}
Dialogue: 0,0:09:23.06,0:09:24.60,Default,,0,0,0,,Em có thể đi cùng mọi người,
Dialogue: 0,0:09:24.68,0:09:27.52,Default,,0,0,0,,nhưng em chỉ đi\Nđể hỗ trợ thôi đó, các đại tỉ.
Dialogue: 0,0:09:27.60,0:09:28.85,Default,,0,0,0,,Biết rồi mà, Miêu Miêu.
Dialogue: 0,0:09:29.86,0:09:33.44,Default,,0,0,0,,{\i1}Lúc rời khỏi cung,{\i}\N{\i1}mình được nhận nhiều tiền hơn mình tưởng.{\i}
Dialogue: 0,0:09:33.53,0:09:35.86,Default,,0,0,0,,{\i1}Vậy nên mình có thể{\i}\N{\i1}trì hoãn việc bị bán đi.{\i}
Dialogue: 0,0:09:37.41,0:09:40.16,Default,,0,0,0,,Vị trí hỗ trợ cũng quan trọng lắm đó.
Dialogue: 0,0:09:40.24,0:09:42.12,Default,,0,0,0,,Cùng cố gắng nhé, Miêu Miêu!
Dialogue: 0,0:09:43.08,0:09:44.87,Default,,0,0,0,,Nhìn em cưng quá đi!
Dialogue: 0,0:09:44.95,0:09:47.33,Default,,0,0,0,,Sắp đến giờ rồi! Nhanh lên…
Dialogue: 0,0:09:50.42,0:09:53.21,Default,,0,0,0,,Ái chà, trông ngon nghẻ hơn mọi khi đó.
Dialogue: 0,0:09:53.30,0:09:55.80,Default,,0,0,0,,Ta có thể kiếm khách cho mi\Nngay bây giờ, nếu muốn.
Dialogue: 0,0:09:58.93,0:10:02.93,Default,,0,0,0,,{\i1}Có vẻ lão tú bà thật sự{\i}\N{\i1}muốn mình trở thành kỹ nữ.{\i}
Dialogue: 0,0:10:04.31,0:10:05.64,Default,,0,0,0,,Kiếm nhiều tiền về nhé!
Dialogue: 0,0:10:06.64,0:10:09.44,Default,,0,0,0,,{\i1}Mình không biết ngâm thơ,{\i}\N{\i1}cũng không biết chơi đàn nhị.{\i}
Dialogue: 0,0:10:09.52,0:10:11.65,Default,,0,0,0,,{\i1}Đừng nói gì đến ca múa.{\i}
Dialogue: 0,0:10:11.73,0:10:15.15,Default,,0,0,0,,{\i1}Mình chỉ là con của một dược sư,{\i}\N{\i1}và chỉ có hứng thú với thảo dược.{\i}
Dialogue: 0,0:10:15.86,0:10:19.16,Default,,0,0,0,,{\i1}Vậy mà bà ta cứ liên tục{\i}\N{\i1}dụ dỗ mình suốt nhiều năm nay.{\i}
Dialogue: 0,0:10:39.55,0:10:42.43,Default,,0,0,0,,{\i1}Đúng là quý tộc siêu giàu có khác.{\i}
Dialogue: 0,0:10:43.30,0:10:46.14,Default,,0,0,0,,{\i1}Trong phủ này{\i}\N{\i1}toàn những món đồ siêu đắt đỏ!{\i}
Dialogue: 0,0:10:46.22,0:10:49.19,Default,,0,0,0,,{\i1}Mình có lấy đi một món{\i}\N{\i1}thì họ cũng không phát hiện đâu…{\i}
Dialogue: 0,0:10:49.27,0:10:51.02,Default,,0,0,0,,{\i1}Không, không được.{\i}
Dialogue: 0,0:10:51.10,0:10:53.52,Default,,0,0,0,,Là trong phòng này ạ.
Dialogue: 0,0:11:02.11,0:11:06.29,Default,,0,0,0,,{\i1}Mình nghe nói họ là các quan chức{\i}\N{\i1}cấp cao trong triều chơi cùng Lí Bạch.{\i}
Dialogue: 0,0:11:06.37,0:11:08.33,Default,,0,0,0,,{\i1}Nhưng họ trông trẻ hơn mình tưởng.{\i}
Dialogue: 0,0:11:08.95,0:11:09.87,Default,,0,0,0,,Nhỏ dãi…
Dialogue: 0,0:11:10.75,0:11:12.88,Default,,0,0,0,,Được rồi, bắt đầu thôi.
Dialogue: 0,0:11:15.50,0:11:17.42,Default,,0,0,0,,{\i1}Nếu có quen biết người giàu thế này,{\i}
Dialogue: 0,0:11:17.51,0:11:20.42,Default,,0,0,0,,{\i1}thì anh ta phải{\i}\N{\i1}giới thiệu cho mình sớm hơn chứ!{\i}
Dialogue: 0,0:11:20.51,0:11:22.09,Default,,0,0,0,,{\i1}Nếu là do Lí Bạch giới thiệu,{\i}
Dialogue: 0,0:11:22.18,0:11:24.47,Default,,0,0,0,,{\i1}thì có lẽ một phần{\i}\N{\i1}khoản nợ của mình sẽ được trừ bớt.{\i}
Dialogue: 0,0:11:25.89,0:11:27.68,Default,,0,0,0,,Được rồi. Bắt tay vào làm việc thôi.
Dialogue: 0,0:12:25.74,0:12:29.91,Default,,0,0,0,,{\i1}Mặc dù công việc yêu cầu,{\i}\N{\i1}nhưng cười mãi cũng mệt quá.{\i}
Dialogue: 0,0:12:30.74,0:12:32.66,Default,,0,0,0,,{\i1}Ơ? Ngài ấy thấy không vui sao?{\i}
Dialogue: 0,0:12:33.75,0:12:36.00,Default,,0,0,0,,Tiểu nữ xin phép.
Dialogue: 0,0:12:36.08,0:12:37.79,Default,,0,0,0,,Để ta một mình đi.
Dialogue: 0,0:12:38.96,0:12:40.75,Default,,0,0,0,,Ta muốn ở một mình.
Dialogue: 0,0:12:40.84,0:12:44.51,Default,,0,0,0,,{\i1}Ủa? Giọng nói này nghe quen lắm…{\i}
Dialogue: 0,0:12:49.81,0:12:51.18,Default,,0,0,0,,Ngài Nhâm Thị?
Dialogue: 0,0:12:54.35,0:12:55.81,Default,,0,0,0,,Sao ngươi lại né đi?
Dialogue: 0,0:12:55.90,0:12:58.02,Default,,0,0,0,,Không được chạm vào kỹ nữ mà.\NNgài không biết à?
Dialogue: 0,0:12:58.11,0:13:01.90,Default,,0,0,0,,Có ai nói với ngươi rằng\Nngươi trang điểm vào trông rất khác chưa?
Dialogue: 0,0:13:01.98,0:13:03.65,Default,,0,0,0,,Có rất nhiều rồi ạ.
Dialogue: 0,0:13:03.74,0:13:05.91,Default,,0,0,0,,Sao ngươi lại ăn mặc như vậy?
Dialogue: 0,0:13:05.99,0:13:07.70,Default,,0,0,0,,Tiểu nữ đang làm việc kiếm tiền.
Dialogue: 0,0:13:07.78,0:13:09.83,Default,,0,0,0,,- Ở lầu xanh á?\N- Vâng.
Dialogue: 0,0:13:10.74,0:13:11.74,Default,,0,0,0,,Có khi nào ngươi…
Dialogue: 0,0:13:12.50,0:13:16.50,Default,,0,0,0,,{\i1}Có vẻ anh ta có thói quen{\i}\N{\i1}đặt câu hỏi về trinh tiết của người khác.{\i}
Dialogue: 0,0:13:16.58,0:13:19.34,Default,,0,0,0,,Tiểu nữ không tiếp khách lẻ.
Dialogue: 0,0:13:20.29,0:13:23.09,Default,,0,0,0,,- Hiện tại thì vẫn chưa.\N- Vẫn chưa…
Dialogue: 0,0:13:23.80,0:13:26.30,Default,,0,0,0,,Vậy thì ta có nên chuộc ngươi ra không?
Dialogue: 0,0:13:26.97,0:13:28.97,Default,,0,0,0,,Sao cơ? Chắc ngài đùa…
Dialogue: 0,0:13:30.68,0:13:32.26,Default,,0,0,0,,{\i1}Chờ đã, có lẽ đó là ý hay.{\i}
Dialogue: 0,0:13:33.64,0:13:37.56,Default,,0,0,0,,Quay lại làm việc trong cung\Ncũng không quá tệ.
Dialogue: 0,0:13:39.15,0:13:41.82,Default,,0,0,0,,Ta tưởng ngươi\Nkhông thích trong cung nên mới bỏ đi.
Dialogue: 0,0:13:41.90,0:13:45.07,Default,,0,0,0,,Sao lại thế? Tiểu nữ có nói vậy sao?
Dialogue: 0,0:13:45.15,0:13:48.57,Default,,0,0,0,,Tiểu nữ đã bảo muốn ở lại làm tiếp mà.\NLà ngài sa thải tiểu nữ mà.
Dialogue: 0,0:13:48.66,0:13:49.87,Default,,0,0,0,,Gì cơ?
Dialogue: 0,0:13:49.95,0:13:52.33,Default,,0,0,0,,Mặc dù công việc\Ncũng có lúc không mấy dễ chịu,
Dialogue: 0,0:13:52.95,0:13:56.87,Default,,0,0,0,,nhưng không phải ai\Ncũng được làm người thử độc.
Dialogue: 0,0:13:56.96,0:14:00.33,Default,,0,0,0,,Điều duy nhất tiểu nữ phiền lòng\Nlà không được tự thử độc mà thôi.
Dialogue: 0,0:14:03.30,0:14:05.71,Default,,0,0,0,,Ngươi nên bỏ trò tự thử độc đó đi thì hơn.
Dialogue: 0,0:14:06.30,0:14:10.14,Default,,0,0,0,,{\i1}Hôm nay ngài ấy lại{\i}\N{\i1}biểu hiện giống một đứa trẻ…{\i}
Dialogue: 0,0:14:10.22,0:14:13.72,Default,,0,0,0,,Cũng đúng. Ngươi là kiểu người như vậy.
Dialogue: 0,0:14:13.81,0:14:14.72,Default,,0,0,0,,Ý ngài là sao?
Dialogue: 0,0:14:14.81,0:14:17.73,Default,,0,0,0,,Có ai bảo rằng ngươi không biết cách\Ndiễn đạt điều mình nghĩ chưa?
Dialogue: 0,0:14:17.81,0:14:18.94,Default,,0,0,0,,Có rất nhiều rồi ạ.
Dialogue: 0,0:14:22.27,0:14:24.23,Default,,0,0,0,,Sao ngươi lại né ta nữa rồi?
Dialogue: 0,0:14:24.32,0:14:25.57,Default,,0,0,0,,Là quy định ạ.
Dialogue: 0,0:14:25.65,0:14:27.90,Default,,0,0,0,,- Chỉ một chút thôi.\N- Quy định là quy định.
Dialogue: 0,0:14:27.99,0:14:30.61,Default,,0,0,0,,- Ngươi cũng có mất gì đâu!\N- Mất nghị lực ạ.
Dialogue: 0,0:14:30.70,0:14:32.58,Default,,0,0,0,,Chỉ một tay thôi. Đầu ngón tay thôi!
Dialogue: 0,0:14:33.45,0:14:36.58,Default,,0,0,0,,{\i1}Mình quên mất tên này cứng đầu thế nào…{\i}
Dialogue: 0,0:14:38.75,0:14:40.37,Default,,0,0,0,,Chỉ đầu ngón tay thôi nhé ạ?
Dialogue: 0,0:14:42.33,0:14:43.25,Default,,0,0,0,,Gì vậy…
Dialogue: 0,0:14:54.01,0:14:55.26,Default,,0,0,0,,{\i1}Tên lưu manh này…{\i}
Dialogue: 0,0:14:55.35,0:14:57.35,Default,,0,0,0,,{\i1}Làm mình nóng cả mặt!{\i}
Dialogue: 0,0:14:58.14,0:14:59.94,Default,,0,0,0,,Ôi chà, từ bao giờ vậy?
Dialogue: 0,0:15:00.48,0:15:02.81,Default,,0,0,0,,- Em nên kể với chúng ta chứ, Miêu Miêu!\N- Xấu hổ quá.
Dialogue: 0,0:15:02.90,0:15:05.98,Default,,0,0,0,,Này, các đại tỉ! Ngài Cao Thuận?
Dialogue: 0,0:15:08.24,0:15:10.86,Default,,0,0,0,,{\i1}Mình đã bị quay cuồng{\i}
Dialogue: 0,0:15:10.95,0:15:13.49,Default,,0,0,0,,{\i1}nên không nhớ được sau đó đã có chuyện gì.{\i}
Dialogue: 0,0:15:13.57,0:15:16.08,Default,,0,0,0,,- Người đó là ai?\N- Có quan hệ gì với em?
Dialogue: 0,0:15:16.16,0:15:17.83,Default,,0,0,0,,Trời đất. Em được lắm đó!
Dialogue: 0,0:15:17.91,0:15:21.96,Default,,0,0,0,,{\i1}Mình chỉ nhớ được là{\i}\N{\i1}cuộc thẩm vấn của các đại tỉ{\i}
Dialogue: 0,0:15:22.04,0:15:23.83,Default,,0,0,0,,{\i1}mãi không có hồi kết.{\i}
Dialogue: 0,0:15:23.92,0:15:26.09,Default,,0,0,0,,LỤC THANH QUÁN
Dialogue: 0,0:15:28.17,0:15:29.59,Default,,0,0,0,,Rồi, tiếp theo,
Dialogue: 0,0:15:29.67,0:15:31.93,Default,,0,0,0,,mình sẽ làm một ít để dự phòng.
Dialogue: 0,0:15:32.01,0:15:34.60,Default,,0,0,0,,Mỗi khi không có tàn nhang\Nthì chẳng có chuyện gì tốt đẹp cả.
Dialogue: 0,0:15:35.85,0:15:37.85,Default,,0,0,0,,Có lẽ là mùa đông năm ngoái…
Dialogue: 0,0:15:41.35,0:15:43.15,Default,,0,0,0,,Mình đã rất sửng sốt khi bị bắt cóc,
Dialogue: 0,0:15:43.23,0:15:45.73,Default,,0,0,0,,nhưng rồi mình bị bán vào hậu cung…
Dialogue: 0,0:15:49.07,0:15:51.70,Default,,0,0,0,,Chưa kể, mình còn được\Nthăng lên làm thị nữ riêng nữa.
Dialogue: 0,0:15:55.53,0:15:59.91,Default,,0,0,0,,Mình đã định sẽ không nhúng tay vào chuyện\Ncủa người khác cho đến khi hết hạn rồi…
Dialogue: 0,0:16:00.00,0:16:02.37,Default,,0,0,0,,Miêu Miêu. Xong chưa?
Dialogue: 0,0:16:02.46,0:16:03.96,Default,,0,0,0,,Rồi ạ. Đây.
Dialogue: 0,0:16:05.17,0:16:08.42,Default,,0,0,0,,Ta cần mi qua xem\Nmột bệnh nhân, được không?
Dialogue: 0,0:16:08.50,0:16:09.51,Default,,0,0,0,,Được ạ.
Dialogue: 0,0:16:23.85,0:16:25.73,Default,,0,0,0,,{\i1}Hậu cung sao?{\i}
Dialogue: 0,0:16:25.81,0:16:28.69,Default,,0,0,0,,{\i1}Đó là nơi mà mình{\i}\N{\i1}không bao giờ muốn dính líu vào…{\i}
Dialogue: 0,0:16:34.07,0:16:36.45,Default,,0,0,0,,Mong là mọi người vẫn ổn.
Dialogue: 0,0:16:40.54,0:16:42.00,Default,,0,0,0,,Con chuẩn bị ra ngoài đây.
Dialogue: 0,0:16:42.08,0:16:45.71,Default,,0,0,0,,Cứ ở yên đó. Mi cũng\Nđâu có nhiều cơ hội tắm ở đây.
Dialogue: 0,0:16:53.01,0:16:55.09,Default,,0,0,0,,Thế từ giờ mi định thế nào?
Dialogue: 0,0:16:55.18,0:16:57.05,Default,,0,0,0,,Con sẽ trả lại khoản nợ.
Dialogue: 0,0:16:57.14,0:16:58.85,Default,,0,0,0,,Việc đó là đương nhiên rồi.
Dialogue: 0,0:17:00.85,0:17:03.35,Default,,0,0,0,,Mi có định trở lại hậu cung không?
Dialogue: 0,0:17:05.06,0:17:06.27,Default,,0,0,0,,Con không biết nữa.
Dialogue: 0,0:17:08.02,0:17:10.73,Default,,0,0,0,,Nhưng có lẽ hậu cung và phố đèn đỏ
Dialogue: 0,0:17:10.82,0:17:12.69,Default,,0,0,0,,cũng không khác nhau là mấy.
Dialogue: 0,0:17:12.78,0:17:13.78,Default,,0,0,0,,Vậy à.
Dialogue: 0,0:17:27.12,0:17:28.96,Default,,0,0,0,,Con không ngủ được à?
Dialogue: 0,0:17:29.59,0:17:31.71,Default,,0,0,0,,Con sẽ ra ngoài hít thở không khí.
Dialogue: 0,0:17:31.80,0:17:34.38,Default,,0,0,0,,- Cẩn thận nhé.\N- Vâng.
Dialogue: 0,0:18:05.95,0:18:09.79,Default,,0,0,0,,Hậu cung hay phố đèn đỏ cũng đều như nhau.
Dialogue: 0,0:18:09.88,0:18:12.88,Default,,0,0,0,,Vừa là vườn hoa, vừa là lồng chim.
Dialogue: 0,0:19:30.58,0:19:32.25,Default,,0,0,0,,LA MÔN
Dialogue: 0,0:20:17.50,0:20:20.71,Default,,0,0,0,,Những ngày tháng sau sẽ ra sao đây?
Dialogue: 0,0:20:27.55,0:20:28.89,Default,,0,0,0,,Rét chết mất…
Dialogue: 0,0:20:32.23,0:20:33.64,Default,,0,0,0,,LỤC THANH QUÁN
Dialogue: 0,0:20:33.73,0:20:35.48,Default,,0,0,0,,{\i1}Vài ngày sau,{\i}
Dialogue: 0,0:20:35.56,0:20:39.40,Default,,0,0,0,,{\i1}một quý tộc diễm lệ{\i}\N{\i1}đã ghé qua khu phố đèn đỏ ở kinh đô.{\i}
Dialogue: 0,0:20:42.57,0:20:45.45,Default,,0,0,0,,{\i1}Mang theo khoản tiền{\i}\N{\i1}đủ để khiến lão tú bà sung sướng,{\i}
Dialogue: 0,0:20:45.53,0:20:47.20,Default,,0,0,0,,{\i1}với lại, không hiểu sao còn mang cả…{\i}
Dialogue: 0,0:20:50.49,0:20:54.08,Default,,0,0,0,,{\i1}một loài thực vật kỳ lạ{\i}\N{\i1}mọc ra từ côn trùng.{\i}
Dialogue: 0,0:20:58.67,0:21:01.42,Default,,0,0,0,,{\i1}Tất cả những gì người này muốn{\i}\N{\i1}chỉ là một cô gái.{\i}
Dialogue: 0,0:22:36.02,0:22:39.52,Default,,0,0,0,,GIỚI THIỆU TẬP SAU
Dialogue: 0,0:22:47.65,0:22:50.07,Default,,0,0,0,,{\i1}Tập tiếp theo, "Công việc ở Ngoại đình".{\i}
Dialogue: 0,0:22:50.16,0:22:51.66,Default,,0,0,0,,Biên dịch: Thỏ Koyuki
