Dialogue: 0,0:00:01.66,0:00:04.67,Default,,0,0,0,,NGUYÊN TÁC: HYUUGA NATSU
Dialogue: 0,0:01:32.00,0:01:33.67,Default,,0,0,0,,Sao ngươi dám dâng lên Lê Hoa Phi
Dialogue: 0,0:01:33.76,0:01:35.72,Default,,0,0,0,,thứ đồ ăn thấp hèn này?
Dialogue: 0,0:01:35.80,0:01:37.68,Default,,0,0,0,,Phải là đồ ăn cao cấp mới được.
Dialogue: 0,0:01:37.76,0:01:40.14,Default,,0,0,0,,Không thì sẽ\Nkhông hợp khẩu vị Lê Hoa Phi đâu.
Dialogue: 0,0:01:40.22,0:01:43.85,Default,,0,0,0,,Riêng việc mang đến cho nương nương thôi\Nđã là một sự bất kính rồi!
Dialogue: 0,0:01:43.93,0:01:46.77,Default,,0,0,0,,Cô ta thật sự nghĩ\NLê Hoa Phi sẽ chấp nhận thứ này sao?
Dialogue: 0,0:01:46.85,0:01:48.65,Default,,0,0,0,,{\i1}Trời ạ.{\i}
Dialogue: 0,0:01:49.35,0:01:50.56,Default,,0,0,0,,{\i1}Phiền quá đi mất.{\i}
Dialogue: 0,0:01:50.65,0:01:54.69,Default,,0,0,0,,{\i1}Nếu được chọn thì không đời nào{\i}\N{\i1}mình lại muốn đến Cung Thủy Tinh!{\i}
Dialogue: 0,0:01:56.32,0:02:00.78,Default,,0,0,0,,{\i1}Đó là đêm mà Hoàng đế{\i}\N{\i1}ghé qua Cung Phỉ Thúy…{\i}
Dialogue: 0,0:02:24.39,0:02:25.77,Default,,0,0,0,,Không có độc.
Dialogue: 0,0:02:27.93,0:02:30.56,Default,,0,0,0,,Nô tì xin phép cáo lui.
Dialogue: 0,0:02:32.11,0:02:33.02,Default,,0,0,0,,Khoan đã.
Dialogue: 0,0:02:34.32,0:02:37.28,Default,,0,0,0,,{\i1}Lần đầu tiên Hoàng đế nói chuyện với mình.{\i}
Dialogue: 0,0:02:37.82,0:02:40.66,Default,,0,0,0,,Ta có vài việc muốn giao cho\Ndược sư mà mọi người đã nói đến.
Dialogue: 0,0:02:41.36,0:02:44.33,Default,,0,0,0,,{\i1}"Mọi người nói đến?"{\i}\N{\i1}Mình có dự cảm chẳng lành về vụ này.{\i}
Dialogue: 0,0:02:44.41,0:02:45.24,Default,,0,0,0,,Nô tì xin nghe.
Dialogue: 0,0:02:45.91,0:02:47.75,Default,,0,0,0,,Tình trạng Lê Hoa Phi không được tốt.
Dialogue: 0,0:02:47.83,0:02:49.91,Default,,0,0,0,,Ngươi qua chăm sóc nàng ấy\Nmột thời gian nhé?
Dialogue: 0,0:02:50.50,0:02:54.46,Default,,0,0,0,,{\i1}"Chăm sóc", ý là "chữa khỏi bệnh".{\i}
Dialogue: 0,0:02:55.50,0:02:58.67,Default,,0,0,0,,{\i1}Mệnh lệnh của Thiên tử là lệnh của trời.{\i}
Dialogue: 0,0:02:58.76,0:03:01.09,Default,,0,0,0,,{\i1}Nếu từ chối, mình có thể bị rơi đầu.{\i}
Dialogue: 0,0:03:01.72,0:03:02.64,Default,,0,0,0,,Nô tì đã rõ.
Dialogue: 0,0:03:04.22,0:03:06.01,Default,,0,0,0,,{\i1}Kể cả vậy,{\i}
Dialogue: 0,0:03:06.10,0:03:09.35,Default,,0,0,0,,{\i1}có nhất thiết phải nói lời đó{\i}\N{\i1}trước mặt một phi tần khác không.{\i}
Dialogue: 0,0:03:09.43,0:03:11.27,Default,,0,0,0,,{\i1}Việc này càng thêm khẳng định{\i}
Dialogue: 0,0:03:11.35,0:03:14.40,Default,,0,0,0,,{\i1}rằng Hoàng đế hoàn toàn{\i}\N{\i1}khác với người thường như mình.{\i}
Dialogue: 0,0:03:14.48,0:03:15.73,Default,,0,0,0,,{\i1}Nhưng mà,{\i}
Dialogue: 0,0:03:15.82,0:03:19.28,Default,,0,0,0,,{\i1}dám đối xử tệ bạc thế này{\i}\N{\i1}với người được Hoàng đế cử tới,{\i}
Dialogue: 0,0:03:19.36,0:03:21.20,Default,,0,0,0,,{\i1}chắc hẳn thị nữ của Lê Hoa Phi{\i}
Dialogue: 0,0:03:21.28,0:03:23.70,Default,,0,0,0,,{\i1}ghét mình lắm vì là người{\i}
Dialogue: 0,0:03:23.78,0:03:25.83,Default,,0,0,0,,{\i1}hầu hạ cho Ngọc Diệp Phi.{\i}
Dialogue: 0,0:03:26.66,0:03:29.16,Default,,0,0,0,,Nếu dọn dẹp xong rồi\Nthì mau cút khỏi đây đi!
Dialogue: 0,0:03:29.79,0:03:31.75,Default,,0,0,0,,Tưng, tưng!
Dialogue: 0,0:03:32.46,0:03:35.54,Default,,0,0,0,,{\i1}Kệ đi vậy. Mình sẽ nấu lại.{\i}
Dialogue: 0,0:03:37.63,0:03:40.26,Default,,0,0,0,,Miêu Miêu, cậu đang ở Cung Thủy Tinh à?
Dialogue: 0,0:03:40.34,0:03:42.88,Default,,0,0,0,,Ừ. Tớ đang chăm sóc Lê Hoa nương nương.
Dialogue: 0,0:03:42.97,0:03:44.01,Default,,0,0,0,,Vậy sao?
Dialogue: 0,0:03:44.09,0:03:47.01,Default,,0,0,0,,Nương nương vẫn chưa khỏe lên à?
Dialogue: 0,0:03:47.60,0:03:50.81,Default,,0,0,0,,Có lẽ độc phấn trắng vẫn còn\Nlưu lại trong cơ thể nương nương.
Dialogue: 0,0:03:50.89,0:03:52.98,Default,,0,0,0,,Do phấn trắng có độc nhỉ?
Dialogue: 0,0:03:53.06,0:03:55.52,Default,,0,0,0,,Phấn trắng đó giờ đã bị cấm rồi.
Dialogue: 0,0:03:56.19,0:03:57.90,Default,,0,0,0,,Tất cả lượng phấn còn sót lại
Dialogue: 0,0:03:57.98,0:04:01.03,Default,,0,0,0,,trong hậu cung đều bị thái giám tịch thu.
Dialogue: 0,0:04:01.11,0:04:02.99,Default,,0,0,0,,Ra là vậy. Tốt rồi.
Dialogue: 0,0:04:03.74,0:04:08.08,Default,,0,0,0,,Nhưng mà được chính Hoàng đế sai bảo!\NCậu giỏi quá, Miêu Miêu!
Dialogue: 0,0:04:08.16,0:04:09.54,Default,,0,0,0,,Tớ bị bất ngờ luôn đó!
Dialogue: 0,0:04:10.45,0:04:12.58,Default,,0,0,0,,{\i1}Ra lệnh cho một cô gái như mình,{\i}
Dialogue: 0,0:04:12.66,0:04:15.54,Default,,0,0,0,,{\i1}chắc là do tên thái y đó bất tài quá mà.{\i}
Dialogue: 0,0:04:16.79,0:04:19.96,Default,,0,0,0,,- Cậu chuẩn bị xuống bếp nhỉ?\N- Ừ.
Dialogue: 0,0:04:20.05,0:04:23.05,Default,,0,0,0,,- Chúc cậu may mắn với việc nấu nướng!\N- Cảm ơn cậu.
Dialogue: 0,0:04:27.22,0:04:28.05,Default,,0,0,0,,Đi thôi!
Dialogue: 0,0:04:29.35,0:04:31.64,Default,,0,0,0,,{\i1}Sau khi xem xét tình trạng của Lê Hoa Phi,{\i}
Dialogue: 0,0:04:31.72,0:04:34.02,Default,,0,0,0,,{\i1}mình quyết định{\i}\N{\i1}cải thiện chế độ ăn uống trước.{\i}
Dialogue: 0,0:04:34.10,0:04:37.31,Default,,0,0,0,,{\i1}Đầu tiên, cần loại bỏ{\i}\N{\i1}lượng độc còn sót lại trong cơ thể.{\i}
Dialogue: 0,0:04:37.40,0:04:40.19,Default,,0,0,0,,{\i1}Để làm vậy, cần nấu{\i}\N{\i1}loại cháo có nhiều chất xơ,{\i}
Dialogue: 0,0:04:40.28,0:04:42.69,Default,,0,0,0,,{\i1}và trà có tác dụng lợi tiểu.{\i}
Dialogue: 0,0:04:42.78,0:04:45.03,Default,,0,0,0,,Thứ này không được. Cả thứ này nữa.
Dialogue: 0,0:04:45.11,0:04:48.74,Default,,0,0,0,,Ngoài ra còn đây, đây, và đây.
Dialogue: 0,0:04:48.83,0:04:49.83,Default,,0,0,0,,À, đây cũng không được.
Dialogue: 0,0:04:52.66,0:04:54.29,Default,,0,0,0,,Đừng có lắm chuyện nữa.
Dialogue: 0,0:04:54.37,0:04:57.42,Default,,0,0,0,,Đây không phải nơi mà tầng lớp\Nthấp hèn có thể tùy tiện ra vào đâu.
Dialogue: 0,0:04:58.25,0:04:59.92,Default,,0,0,0,,Tưng, tưng!
Dialogue: 0,0:05:00.55,0:05:02.05,Default,,0,0,0,,Sẽ tốn thời gian đây.
Dialogue: 0,0:05:03.80,0:05:05.30,Default,,0,0,0,,Thôi được, vậy thì…
Dialogue: 0,0:05:05.38,0:05:07.14,Default,,0,0,0,,Thứ này, thứ này, kia và đây…
Dialogue: 0,0:05:12.39,0:05:13.68,Default,,0,0,0,,Tôi đã nói bao lần rồi hả?
Dialogue: 0,0:05:13.77,0:05:16.56,Default,,0,0,0,,Nhưng cần dâng lên nương nương\Ncác món ăn dễ tiêu hóa.
Dialogue: 0,0:05:16.64,0:05:18.27,Default,,0,0,0,,Không phải thứ đồ hạ đẳng đó.
Dialogue: 0,0:05:18.35,0:05:22.40,Default,,0,0,0,,Người bệnh cần ăn các món\Nnhiều dinh dưỡng để có sức mà hồi phục.
Dialogue: 0,0:05:23.23,0:05:25.53,Default,,0,0,0,,{\i1}Nương nương luôn ăn những thứ đó sao?{\i}
Dialogue: 0,0:05:26.11,0:05:28.16,Default,,0,0,0,,{\i1}Đúng là những thứ đó nhiều dinh dưỡng,{\i}
Dialogue: 0,0:05:28.78,0:05:31.53,Default,,0,0,0,,{\i1}nhưng lại quá khó tiêu{\i}\N{\i1}cho người bệnh đang có dạ dày yếu.{\i}
Dialogue: 0,0:05:31.62,0:05:34.16,Default,,0,0,0,,{\i1}Nếu họ chịu động não một tí{\i}\N{\i1}thì cũng hiểu ra rồi.{\i}
Dialogue: 0,0:05:34.25,0:05:36.16,Default,,0,0,0,,{\i1}Không ai ngăn họ lại à?{\i}
Dialogue: 0,0:05:37.67,0:05:40.59,Default,,0,0,0,,Lê Hoa nương nương,\Nnô tì mang đồ ăn đến rồi.
Dialogue: 0,0:05:41.25,0:05:43.76,Default,,0,0,0,,Đều là những món mà nương nương thích.
Dialogue: 0,0:05:43.84,0:05:45.97,Default,,0,0,0,,Xin nương nương hãy ăn một chút.
Dialogue: 0,0:05:51.26,0:05:53.81,Default,,0,0,0,,- Lê Hoa nương nương?\N- Phải làm sao đây?
Dialogue: 0,0:05:53.89,0:05:55.14,Default,,0,0,0,,Nước, nhanh lên!
Dialogue: 0,0:05:55.22,0:05:56.60,Default,,0,0,0,,Nương nương có sao không?
Dialogue: 0,0:05:56.68,0:05:59.73,Default,,0,0,0,,Nương nương, người uống chút nước đi.
Dialogue: 0,0:06:01.69,0:06:02.86,Default,,0,0,0,,Hử?
Dialogue: 0,0:06:03.52,0:06:06.03,Default,,0,0,0,,Vì có một kẻ thấp hèn như cô\Nở trong căn phòng này…
Dialogue: 0,0:06:06.11,0:06:08.70,Default,,0,0,0,,- Làm vấy bẩn không khí trong phòng!\N- Cút ra ngoài!
Dialogue: 0,0:06:10.95,0:06:12.28,Default,,0,0,0,,Tưng, tưng…
Dialogue: 0,0:06:14.16,0:06:16.79,Default,,0,0,0,,{\i1}Mình còn không thể lại gần nương nương.{\i}
Dialogue: 0,0:06:17.96,0:06:20.37,Default,,0,0,0,,{\i1}Mình nên làm gì đây?{\i}
Dialogue: 0,0:06:25.67,0:06:27.42,Default,,0,0,0,,Ít nhất cũng để tôi kiểm tra được không?
Dialogue: 0,0:06:27.51,0:06:28.88,Default,,0,0,0,,Không cần.
Dialogue: 0,0:06:28.97,0:06:32.39,Default,,0,0,0,,Nếu cô khiến nương nương\Nốm nặng hơn thì sao?
Dialogue: 0,0:06:34.18,0:06:37.35,Default,,0,0,0,,{\i1}Cứ đà này, nương nương{\i}\N{\i1}chắc chắn sẽ yếu dần và chết.{\i}
Dialogue: 0,0:06:37.43,0:06:39.73,Default,,0,0,0,,{\i1}Loài người phải ăn để sống sót.{\i}
Dialogue: 0,0:06:41.27,0:06:45.36,Default,,0,0,0,,{\i1}Có lẽ nương nương không còn{\i}\N{\i1}muốn sống nữa sau khi mất đứa con.{\i}
Dialogue: 0,0:06:51.24,0:06:53.49,Default,,0,0,0,,{\i1}Còn bao lâu nữa thì{\i}\N{\i1}đầu mình sẽ tạm biệt cổ{\i}
Dialogue: 0,0:06:54.08,0:06:57.79,Default,,0,0,0,,{\i1}vì kháng lại Thánh chỉ của Hoàng đế đây?{\i}
Dialogue: 0,0:06:58.91,0:07:00.67,Default,,0,0,0,,Có vẻ ngươi đang cần giúp đỡ nhỉ?
Dialogue: 0,0:07:02.96,0:07:05.09,Default,,0,0,0,,Trông có giống nô tì cần giúp không?
Dialogue: 0,0:07:05.17,0:07:06.75,Default,,0,0,0,,Rất cần là đằng khác.
Dialogue: 0,0:07:08.05,0:07:09.34,Default,,0,0,0,,Ngài Nhâm Thị?
Dialogue: 0,0:07:10.76,0:07:12.51,Default,,0,0,0,,Ngài ấy có chuyện gì với cô ta vậy?
Dialogue: 0,0:07:12.59,0:07:13.89,Default,,0,0,0,,Sao cô ta và ngài Nhâm Thị…
Dialogue: 0,0:07:13.97,0:07:16.01,Default,,0,0,0,,Họ lại nghĩ linh tinh gì rồi!
Dialogue: 0,0:07:20.18,0:07:21.69,Default,,0,0,0,,Chúng ta có nên vào phòng không?
Dialogue: 0,0:07:23.69,0:07:25.19,Default,,0,0,0,,Ngài Nhâm Thị!
Dialogue: 0,0:07:26.11,0:07:28.78,Default,,0,0,0,,Làm trái mệnh lệnh của Hoàng đế
Dialogue: 0,0:07:28.86,0:07:31.53,Default,,0,0,0,,là không khôn ngoan đâu,\Ncác quý cô xinh đẹp.
Dialogue: 0,0:07:33.32,0:07:35.62,Default,,0,0,0,,Ôi trời! Chúng tôi\Nđâu có làm những việc như vậy…
Dialogue: 0,0:07:35.70,0:07:38.08,Default,,0,0,0,,Đúng đó. Ai lại làm vậy chứ…
Dialogue: 0,0:07:39.25,0:07:41.58,Default,,0,0,0,,Phụ nữ thật đáng sợ.
Dialogue: 0,0:07:49.59,0:07:50.84,Default,,0,0,0,,Lên đi.
Dialogue: 0,0:08:21.33,0:08:23.21,Default,,0,0,0,,{\i1}Nương nương có ý chí muốn ăn.{\i}
Dialogue: 0,0:08:24.33,0:08:27.67,Default,,0,0,0,,{\i1}Nhưng nương nương yếu hơn mình nghĩ.{\i}
Dialogue: 0,0:08:27.75,0:08:29.30,Default,,0,0,0,,{\i1}Có lẽ cháo gạo sẽ hiệu quả.{\i}
Dialogue: 0,0:08:33.55,0:08:35.55,Default,,0,0,0,,Nô tì xin phép.
Dialogue: 0,0:08:37.22,0:08:39.06,Default,,0,0,0,,{\i1}Da của nương nương vẫn như trước…{\i}
Dialogue: 0,0:08:58.53,0:09:01.54,Default,,0,0,0,,Cô có phải người trang điểm\Ncho Lê Hoa nương nương không?
Dialogue: 0,0:09:01.62,0:09:03.54,Default,,0,0,0,,Đúng là tôi.
Dialogue: 0,0:09:03.62,0:09:06.25,Default,,0,0,0,,Tôi muốn nương nương giữ được vẻ đẹp.
Dialogue: 0,0:09:06.92,0:09:09.09,Default,,0,0,0,,Đó là nhiệm vụ của một thị nữ.
Dialogue: 0,0:09:09.92,0:09:11.71,Default,,0,0,0,,Tất cả là vì Lê Hoa nương nương.
Dialogue: 0,0:09:11.80,0:09:13.80,Default,,0,0,0,,- Đó là đương nhiên mà.\N- Vậy sao?
Dialogue: 0,0:09:15.76,0:09:16.93,Default,,0,0,0,,Cô đang làm gì thế?
Dialogue: 0,0:09:17.51,0:09:19.80,Default,,0,0,0,,Làm gì? Tôi chỉ\Ntrừng phạt một đứa ngu thôi.
Dialogue: 0,0:09:21.43,0:09:24.10,Default,,0,0,0,,Ối! Dừng lại! Đau quá!
Dialogue: 0,0:09:32.90,0:09:35.57,Default,,0,0,0,,Chất độc sẽ sớm chạy khắp cơ thể cô.
Dialogue: 0,0:09:35.65,0:09:37.07,Default,,0,0,0,,Tốt rồi.
Dialogue: 0,0:09:37.15,0:09:39.32,Default,,0,0,0,,Giờ thì cô có thể xinh đẹp kiều diễm
Dialogue: 0,0:09:39.91,0:09:42.74,Default,,0,0,0,,như Lê Hoa nương nương mà cô ngưỡng mộ.
Dialogue: 0,0:09:42.83,0:09:46.91,Default,,0,0,0,,Làn da rướm máu, đôi mắt trũng sâu,
Dialogue: 0,0:09:47.00,0:09:49.50,Default,,0,0,0,,và một cơ thể không hấp thụ nổi đồ ăn.
Dialogue: 0,0:09:50.17,0:09:52.55,Default,,0,0,0,,Cô có biết tại sao\Nthứ này lại bị cấm không?
Dialogue: 0,0:09:52.63,0:09:53.55,Default,,0,0,0,,Biết không hả?
Dialogue: 0,0:10:02.39,0:10:04.43,Default,,0,0,0,,Nhưng, tôi cứ nghĩ rằng
Dialogue: 0,0:10:04.97,0:10:07.56,Default,,0,0,0,,Lê Hoa nương nương sẽ thích…
Dialogue: 0,0:10:07.64,0:10:09.77,Default,,0,0,0,,Tôi nói là nó có độc cơ mà, khốn kiếp!
Dialogue: 0,0:10:09.85,0:10:11.61,Default,,0,0,0,,Cô không biết dùng đầu để nghĩ à.
Dialogue: 0,0:10:11.69,0:10:14.23,Default,,0,0,0,,Cô luôn cho là\Nmình biết hết mọi thứ, phải không?
Dialogue: 0,0:10:15.07,0:10:18.03,Default,,0,0,0,,Ai lại thích thứ độc dược\Nđã giết con mình kia chứ?
Dialogue: 0,0:10:30.92,0:10:33.92,Default,,0,0,0,,Đi súc miệng và rửa mặt đi!
Dialogue: 0,0:10:34.92,0:10:38.59,Default,,0,0,0,,Các cô! Đây không phải\Nmôi trường phù hợp cho người bệnh!
Dialogue: 0,0:10:38.67,0:10:41.80,Default,,0,0,0,,- Nhanh chóng dọn dẹp căn phòng đi!\N- Vâng!
Dialogue: 0,0:10:44.60,0:10:45.43,Default,,0,0,0,,Chà.
Dialogue: 0,0:10:46.10,0:10:48.77,Default,,0,0,0,,Phụ nữ đúng thật là đáng sợ, nhỉ?
Dialogue: 0,0:10:53.52,0:10:55.94,Default,,0,0,0,,{\i1}Mình thực sự làm vậy rồi sao?{\i}
Dialogue: 0,0:10:56.03,0:10:57.53,Default,,0,0,0,,Đi nào.
Dialogue: 0,0:11:00.20,0:11:03.87,Default,,0,0,0,,{\i1}Tình trạng của Lê Hoa nương nương{\i}\N{\i1}tệ hơn mình nghĩ.{\i}
Dialogue: 0,0:11:04.49,0:11:07.12,Default,,0,0,0,,{\i1}Trước hết, mình nấu lại cháo ngũ cốc{\i}\N{\i1}thành nước cháo loãng,{\i}
Dialogue: 0,0:11:07.20,0:11:09.50,Default,,0,0,0,,{\i1}ép nương nương mở miệng và đổ vào.{\i}
Dialogue: 0,0:11:09.58,0:11:11.83,Default,,0,0,0,,{\i1}Để nương nương chậm rãi{\i}\N{\i1}nuốt xuống, rồi lặp lại.{\i}
Dialogue: 0,0:11:13.25,0:11:16.84,Default,,0,0,0,,{\i1}Giờ không phải lúc{\i}\N{\i1}bận tâm đến phép tắc hay thứ bậc.{\i}
Dialogue: 0,0:11:18.26,0:11:20.72,Default,,0,0,0,,{\i1}Thông thoáng gió trong phòng{\i}\N{\i1}khiến mùi hương tan bớt,{\i}
Dialogue: 0,0:11:20.80,0:11:23.09,Default,,0,0,0,,{\i1}căn phòng bắt đầu có mùi của người bệnh.{\i}
Dialogue: 0,0:11:23.18,0:11:26.93,Default,,0,0,0,,Mấy thị nữ vô dụng đó không biết\Nvệ sinh cho chủ nhân mình à?
Dialogue: 0,0:11:27.01,0:11:29.14,Default,,0,0,0,,Vậy mà còn tự nhận mình là thị nữ?
Dialogue: 0,0:11:29.23,0:11:33.10,Default,,0,0,0,,Nếu có thời gian đốt hương, thì thà\Nlàm những việc cần làm khác còn hơn!
Dialogue: 0,0:11:35.98,0:11:38.86,Default,,0,0,0,,Này. Mang chậu nước nóng\Nvà khăn lau vào đây.
Dialogue: 0,0:11:38.94,0:11:40.07,Default,,0,0,0,,Vâng.
Dialogue: 0,0:11:42.86,0:11:44.99,Default,,0,0,0,,- Mấy người cũng giúp một tay đi.\N- Vâng!
Dialogue: 0,0:11:51.37,0:11:53.62,Default,,0,0,0,,{\i1}Cứ khi nào có thể,{\i}\N{\i1}mình đều cho nương nương uống trà.{\i}
Dialogue: 0,0:11:53.71,0:11:55.33,Default,,0,0,0,,{\i1}Việc đó sẽ giúp nương nương lợi tiểu{\i}
Dialogue: 0,0:11:55.96,0:11:57.71,Default,,0,0,0,,{\i1}và nhanh chóng thải độc ra khỏi cơ thể.{\i}
Dialogue: 0,0:11:57.80,0:12:01.38,Default,,0,0,0,,Tôi nghĩ Lê Hoa nương nương không muốn…
Dialogue: 0,0:12:01.47,0:12:03.09,Default,,0,0,0,,Không được. Người phải uống.
Dialogue: 0,0:12:04.51,0:12:06.51,Default,,0,0,0,,{\i1}Khi người có thể ăn{\i}\N{\i1}nhiều hơn trong một lần{\i}
Dialogue: 0,0:12:06.60,0:12:09.10,Default,,0,0,0,,{\i1}mình từ từ tăng lượng gạo lên.{\i}
Dialogue: 0,0:12:09.18,0:12:11.27,Default,,0,0,0,,{\i1}Một khi nương nương có thể nuốt chúng,{\i}
Dialogue: 0,0:12:11.35,0:12:13.94,Default,,0,0,0,,{\i1}mình thêm súp và{\i}\N{\i1}trái cây nghiền vào khẩu phần ăn.{\i}
Dialogue: 0,0:12:15.90,0:12:17.44,Default,,0,0,0,,{\i1}Nghe nói sau vụ đó,{\i}
Dialogue: 0,0:12:17.52,0:12:19.57,Default,,0,0,0,,{\i1}thị nữ kia đã bị quản thúc tại phòng.{\i}
Dialogue: 0,0:12:20.73,0:12:22.53,Default,,0,0,0,,{\i1}Cô ta đã giấu đi{\i}
Dialogue: 0,0:12:22.61,0:12:24.70,Default,,0,0,0,,{\i1}hộp phấn trắng cho Lê Hoa nương nương.{\i}
Dialogue: 0,0:12:26.28,0:12:28.37,Default,,0,0,0,,{\i1}Ngươi thái giám tịch thu sót hộp phấn đó{\i}
Dialogue: 0,0:12:28.45,0:12:30.49,Default,,0,0,0,,{\i1}cũng bị phạt roi.{\i}
Dialogue: 0,0:12:48.01,0:12:49.47,Default,,0,0,0,,Trông ngươi có vẻ mệt.
Dialogue: 0,0:12:50.43,0:12:53.43,Default,,0,0,0,,Vâng. Không như ai đó, nô tì rất bận.
Dialogue: 0,0:12:54.23,0:12:55.48,Default,,0,0,0,,Tôi mang thứ này cho cô.
Dialogue: 0,0:12:58.06,0:13:00.65,Default,,0,0,0,,Cảm ơn ngài rất nhiều.
Dialogue: 0,0:13:03.82,0:13:05.74,Default,,0,0,0,,{\i1}Ngài ấy vẫn rất chu đáo như mọi khi!{\i}
Dialogue: 0,0:13:05.82,0:13:09.12,Default,,0,0,0,,{\i1}Người như vậy sẽ là một người chồng tốt.{\i}
Dialogue: 0,0:13:09.20,0:13:10.49,Default,,0,0,0,,{\i1}Mỗi tội lại là thái giám.{\i}
Dialogue: 0,0:13:12.54,0:13:13.91,Default,,0,0,0,,{\i1}So với tên đó thì…{\i}
Dialogue: 0,0:13:18.79,0:13:21.05,Default,,0,0,0,,Ngươi có cần ta giúp gì không?
Dialogue: 0,0:13:24.34,0:13:26.72,Default,,0,0,0,,Chuyện gì? Cứ nói cho ta!
Dialogue: 0,0:13:28.55,0:13:32.22,Default,,0,0,0,,Bên đó không đủ người nên hãy gọi thêm đi.
Dialogue: 0,0:13:32.31,0:13:34.52,Default,,0,0,0,,Mọi người cố gắng\Nlàm xong sớm nhất có thể nhé!
Dialogue: 0,0:13:34.60,0:13:35.68,Default,,0,0,0,,Vâng, thưa ngài!
Dialogue: 0,0:13:37.19,0:13:38.73,Default,,0,0,0,,Phòng tắm hơi à?
Dialogue: 0,0:13:38.81,0:13:41.02,Default,,0,0,0,,Cô ấy nói nó rất quan trọng\Nđể giúp nương nương đổ mồ hôi.
Dialogue: 0,0:13:41.11,0:13:42.82,Default,,0,0,0,,Sẽ hiệu quả chứ?
Dialogue: 0,0:13:43.36,0:13:44.40,Default,,0,0,0,,Chắc chắn rồi.
Dialogue: 0,0:13:45.32,0:13:48.28,Default,,0,0,0,,Chúng ta cần tận dụng những gì mình có mà?
Dialogue: 0,0:14:02.96,0:14:04.26,Default,,0,0,0,,Có chuyện gì sao ạ?
Dialogue: 0,0:14:05.67,0:14:09.30,Default,,0,0,0,,Sao ngươi không…
Dialogue: 0,0:14:10.64,0:14:14.06,Default,,0,0,0,,cứ để ta chết đi cho rồi?
Dialogue: 0,0:14:15.77,0:14:19.02,Default,,0,0,0,,Nếu nương nương muốn chết,\Nthì người đã không ăn.
Dialogue: 0,0:14:20.23,0:14:23.90,Default,,0,0,0,,Nhưng người vẫn ăn cháo\Nvì người chưa muốn chết.
Dialogue: 0,0:14:43.25,0:14:44.84,Default,,0,0,0,,{\i1}Thì ra là vậy.{\i}
Dialogue: 0,0:14:59.94,0:15:01.15,Default,,0,0,0,,Ngươi nói đúng.
Dialogue: 0,0:15:49.23,0:15:50.53,Default,,0,0,0,,Cô…
Dialogue: 0,0:15:51.49,0:15:52.95,Default,,0,0,0,,Thời hạn quản thúc đã hết.
Dialogue: 0,0:15:53.03,0:15:57.12,Default,,0,0,0,,Tôi đã được phép\Ntrở lại hầu hạ Lê Hoa nương nương.
Dialogue: 0,0:15:58.91,0:16:02.54,Default,,0,0,0,,Tôi sẽ không bao giờ\Nmắc lại lỗi lầm giống lần trước.
Dialogue: 0,0:16:03.96,0:16:05.63,Default,,0,0,0,,Tôi sẽ thay ca từ giờ.
Dialogue: 0,0:16:05.71,0:16:07.54,Default,,0,0,0,,Cô đi nghỉ ngơi chút đi.
Dialogue: 0,0:16:09.09,0:16:10.26,Default,,0,0,0,,Tôi hiểu rồi.
Dialogue: 0,0:16:17.51,0:16:18.47,Default,,0,0,0,,Lê Hoa nương nương.
Dialogue: 0,0:16:23.10,0:16:24.31,Default,,0,0,0,,Lê Hoa nương nương.
Dialogue: 0,0:16:34.53,0:16:38.16,Default,,0,0,0,,Ngươi lấy cho ta cốc nước nhé?
Dialogue: 0,0:16:42.71,0:16:43.58,Default,,0,0,0,,Vâng, nương nương.
Dialogue: 0,0:16:48.13,0:16:49.09,Default,,0,0,0,,Vâng!
Dialogue: 0,0:16:54.97,0:16:56.34,Default,,0,0,0,,{\i1}Sau khoảng hai tháng,{\i}
Dialogue: 0,0:16:57.09,0:17:00.56,Default,,0,0,0,,{\i1}Lê Hoa nương nương{\i}\N{\i1}đã bình phục đủ để có thể tự đi lại.{\i}
Dialogue: 0,0:17:03.81,0:17:07.27,Default,,0,0,0,,{\i1}Nương nương kiêu hãnh{\i}\N{\i1}nhưng không hề tự phụ. Vì vụ việc{\i}
Dialogue: 0,0:17:07.35,0:17:11.23,Default,,0,0,0,,{\i1}với Đông Cung mà mình tưởng{\i}\N{\i1}người là một công chúa hư hỏng,{\i}
Dialogue: 0,0:17:12.36,0:17:16.32,Default,,0,0,0,,{\i1}nhưng nương nương có những đức tính{\i}\N{\i1}xứng với một phi tần.{\i}
Dialogue: 0,0:17:51.23,0:17:54.94,Default,,0,0,0,,Nô tì sẽ rời đi vào sáng sớm ngày mai.
Dialogue: 0,0:17:55.69,0:17:56.82,Default,,0,0,0,,Ta biết rồi.
Dialogue: 0,0:17:57.57,0:17:59.03,Default,,0,0,0,,Nô tì đã đưa cho các thị nữ
Dialogue: 0,0:17:59.11,0:18:02.45,Default,,0,0,0,,danh sách những món người nên ăn\Nvà những thứ nên chú ý.
Dialogue: 0,0:18:05.04,0:18:09.54,Default,,0,0,0,,Nè. Ngươi có nghĩ rằng ta\Nkhông còn có thể có con được nữa không?
Dialogue: 0,0:18:11.50,0:18:12.59,Default,,0,0,0,,Nô tì không biết.
Dialogue: 0,0:18:13.21,0:18:15.30,Default,,0,0,0,,Tốt hơn hết là nương nương nên thử.
Dialogue: 0,0:18:15.92,0:18:18.59,Default,,0,0,0,,Ngay cả khi Hoàng đế\Nkhông còn ghé qua chỗ ta sao?
Dialogue: 0,0:18:19.72,0:18:22.55,Default,,0,0,0,,Nô tì đến đây là do Hoàng đế yêu cầu.
Dialogue: 0,0:18:23.35,0:18:25.68,Default,,0,0,0,,Sau khi nô tì trở về Cung Phỉ Thúy,
Dialogue: 0,0:18:25.77,0:18:29.19,Default,,0,0,0,,có lẽ Hoàng đế sẽ ghé thăm nương nương.
Dialogue: 0,0:18:30.56,0:18:33.15,Default,,0,0,0,,Liệu một người phụ nữ\Nđã để mất đứa con của mình
Dialogue: 0,0:18:33.23,0:18:37.69,Default,,0,0,0,,do không chịu nghe theo lời cảnh báo\Nsẽ thắng được Ngọc Diệp Phi chứ?
Dialogue: 0,0:18:39.03,0:18:41.74,Default,,0,0,0,,Vấn đề không phải là thắng hay thua.
Dialogue: 0,0:18:43.41,0:18:46.66,Default,,0,0,0,,Thế gian này có\Nhàng trăm rồi hàng nghìn loài hoa.
Dialogue: 0,0:18:46.75,0:18:49.58,Default,,0,0,0,,Thật không đúng đắn khi cho rằng
Dialogue: 0,0:18:49.67,0:18:52.17,Default,,0,0,0,,hoa mẫu đơn đẹp hơn\Nhay hoa cát cánh đẹp hơn.
Dialogue: 0,0:18:53.25,0:18:57.26,Default,,0,0,0,,Ta không có đôi mắt long lanh như\Nngọc bích hay mái tóc sáng màu của cô ấy.
Dialogue: 0,0:19:01.22,0:19:03.80,Default,,0,0,0,,Nương nương có thể\Nbù đắp bằng những thứ khác.
Dialogue: 0,0:19:05.47,0:19:08.06,Default,,0,0,0,,Không chỉ kích cỡ rất ấn tượng.
Dialogue: 0,0:19:08.14,0:19:10.35,Default,,0,0,0,,Mà độ căng lẫn vóc dáng đều rất tinh xảo.
Dialogue: 0,0:19:10.94,0:19:11.85,Default,,0,0,0,,Sao cơ?
Dialogue: 0,0:19:12.86,0:19:15.65,Default,,0,0,0,,Nô tì nói nhỏ với nương nương được không?
Dialogue: 0,0:19:15.73,0:19:17.07,Default,,0,0,0,,Được chứ.
Dialogue: 0,0:19:31.46,0:19:34.29,Default,,0,0,0,,Vậy nô tì xin phép cáo lui.
Dialogue: 0,0:19:38.17,0:19:40.38,Default,,0,0,0,,{\i1}"Món quà" mình để lại cho Lê Hoa Phi{\i}
Dialogue: 0,0:19:40.47,0:19:43.22,Default,,0,0,0,,{\i1}là một phương pháp bí truyền{\i}\N{\i1}mà các đại tỷ đã dạy mình{\i}
Dialogue: 0,0:19:43.30,0:19:44.43,Default,,0,0,0,,{\i1}hồi còn ở kỹ viện.{\i}
Dialogue: 0,0:19:45.26,0:19:48.43,Default,,0,0,0,,Em cũng nhớ lấy nhé, Miêu Miêu.\NSẽ có ích cho em đó!
Dialogue: 0,0:19:48.52,0:19:49.43,Default,,0,0,0,,Vâng.
Dialogue: 0,0:19:50.60,0:19:51.64,Default,,0,0,0,,{\i1}Không may là{\i}
Dialogue: 0,0:19:51.73,0:19:55.73,Default,,0,0,0,,{\i1}mình không có hai quả to{\i}\N{\i1}để thực hành việc đó.{\i}
Dialogue: 0,0:19:55.81,0:19:58.28,Default,,0,0,0,,{\i1}Nhưng đó là phương pháp hoàn hảo{\i}\N{\i1}đối với Lê Hoa Phi.{\i}
Dialogue: 0,0:20:00.82,0:20:02.70,Default,,0,0,0,,{\i1}Mong rằng sẽ giúp được người.{\i}
Dialogue: 0,0:20:09.08,0:20:10.41,Default,,0,0,0,,Nô tì đã về.
Dialogue: 0,0:20:11.37,0:20:12.75,Default,,0,0,0,,Mừng ngươi trở về.
Dialogue: 0,0:20:13.46,0:20:15.25,Default,,0,0,0,,Em có khỏe không, Miêu Miêu?
Dialogue: 0,0:20:15.88,0:20:17.54,Default,,0,0,0,,Em gầy quá rồi nè!
Dialogue: 0,0:20:17.63,0:20:19.71,Default,,0,0,0,,Chắc là vất vả lắm.
Dialogue: 0,0:20:19.80,0:20:22.67,Default,,0,0,0,,{\i1}Tự mình hoàn thành Thánh chỉ của Hoàng đế…{\i}
Dialogue: 0,0:20:22.76,0:20:24.26,Default,,0,0,0,,{\i1}Cô gái đó thật ấn tượng.{\i}
Dialogue: 0,0:20:27.60,0:20:30.77,Default,,0,0,0,,{\i1}Sau đó, có một khoảng thời gian{\i}\N{\i1}tần suất Hoàng đế{\i}
Dialogue: 0,0:20:30.85,0:20:33.77,Default,,0,0,0,,{\i1}ghé thăm Cung Phỉ Thúy giảm đi đáng kể.{\i}
Dialogue: 0,0:20:35.27,0:20:39.40,Default,,0,0,0,,Cuối cùng cũng có thể ngủ ngon giấc rồi!
Dialogue: 0,0:20:41.15,0:20:45.82,Default,,0,0,0,,{\i1}Còn về ánh mắt thất thần của Miêu Miêu{\i}\N{\i1}thì lại là một chuyện khác.{\i}
Dialogue: 0,0:21:02.01,0:21:02.97,Default,,0,0,0,,Là lời nguyền!
Dialogue: 0,0:22:36.06,0:22:39.52,Default,,0,0,0,,GIỚI THIỆU TẬP SAU
Dialogue: 0,0:22:47.65,0:22:49.53,Default,,0,0,0,,{\i1}Tập tiếp theo,{\i} "Thủ đoạn ngầm".
Dialogue: 0,0:22:49.61,0:22:50.99,Default,,0,0,0,,Biên dịch: Thỏ Koyuki
