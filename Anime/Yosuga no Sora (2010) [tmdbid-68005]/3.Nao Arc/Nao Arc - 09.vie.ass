Dialogue: 0,0:00:01.41,0:00:02.68,Yosuga,,0000,0000,0000,,Mọi người đang đợi đấy.
Dialogue: 0,0:00:04.03,0:00:05.11,Yosuga,,0000,0000,0000,,Em không muốn gặp ai hết.
Dialogue: 0,0:00:06.76,0:00:08.16,Yosuga,,0000,0000,0000,,Hôm nay nóng lắm đấy.
Dialogue: 0,0:00:08.86,0:00:10.20,Yosuga,,0000,0000,0000,,Thế nên em mới ở nhà.
Dialogue: 0,0:00:11.11,0:00:12.43,Yosuga,,0000,0000,0000,,Ra biển mát hơn mà.
Dialogue: 0,0:00:12.91,0:00:14.88,Yosuga,,0000,0000,0000,,Tóc bị ướt cứ dính dính khó chịu lắm.
Dialogue: 0,0:00:33.44,0:00:35.25,Yosuga,,0000,0000,0000,,Tiếc là Sora-chan không tới...
Dialogue: 0,0:00:36.72,0:00:37.13,Yosuga,,0000,0000,0000,,Ừ...
Dialogue: 0,0:02:37.14,0:02:37.93,Yosuga,,0000,0000,0000,,Đỡ này!
Dialogue: 0,0:02:46.11,0:02:47.19,Yosuga,,0000,0000,0000,,Rõ!
Dialogue: 0,0:02:47.82,0:02:48.84,Yosuga,,0000,0000,0000,,Được rồi!
Dialogue: 0,0:02:51.83,0:02:53.94,Yosuga,,0000,0000,0000,,Xin lỗi nhé... Để tớ ra đó nhặt lại.
Dialogue: 0,0:02:54.37,0:02:56.82,Yosuga,,0000,0000,0000,,Haru-chan, không được thì thôi nhé.
Dialogue: 0,0:02:57.31,0:03:00.00,Yosuga,,0000,0000,0000,,Chân anh vẫn chạm đất mà, không sao đâu!
Dialogue: 0,0:03:00.60,0:03:01.48,Yosuga,,0000,0000,0000,,Haru-chan!
Dialogue: 0,0:03:02.00,0:03:02.87,Yosuga,,0000,0000,0000,,Chết rồi!
Dialogue: 0,0:03:16.71,0:03:18.61,Yosuga,,0000,0000,0000,,Nhìn kìa! Hình như cậu ta bị chết đuối!
Dialogue: 0,0:03:19.59,0:03:20.28,Yosuga,,0000,0000,0000,,Thật hả?
Dialogue: 0,0:03:20.46,0:03:21.56,Yosuga,,0000,0000,0000,,Trông có vẻ không thở được!
Dialogue: 0,0:03:21.72,0:03:23.04,Yosuga,,0000,0000,0000,,Nguy quá!
Dialogue: 0,0:03:30.11,0:03:30.93,Yosuga,,0000,0000,0000,,Vâng.
Dialogue: 0,0:03:31.94,0:03:33.32,Yosuga,,0000,0000,0000,,Gần trạm xe buýt.
Dialogue: 0,0:03:33.51,0:03:34.13,Yosuga,,0000,0000,0000,,Vâng.
Dialogue: 0,0:03:34.30,0:03:34.78,Yosuga,,0000,0000,0000,,Vâng.
Dialogue: 0,0:03:34.82,0:03:36.11,Yosuga,,0000,0000,0000,,Làm sao bây giờ?
Dialogue: 0,0:03:55.72,0:03:56.83,Yosuga,,0000,0000,0000,,Haruka!
Dialogue: 0,0:03:57.56,0:03:58.73,Yosuga,,0000,0000,0000,,Cảm ơn trời!
Dialogue: 0,0:04:48.87,0:04:50.18,Yosuga,,0000,0000,0000,,Đâu có ốm.
Dialogue: 0,0:04:50.80,0:04:51.68,Yosuga,,0000,0000,0000,,Hay là dịch sốt mùa hè?
Dialogue: 0,0:04:54.23,0:04:55.17,Yosuga,,0000,0000,0000,,Anh vẫn đi à...
Dialogue: 0,0:04:55.80,0:04:58.84,Yosuga,,0000,0000,0000,,Có gì em cứ nhắn tin. Anh sẽ về ngay.
Dialogue: 0,0:05:11.81,0:05:12.50,Yosuga,,0000,0000,0000,,Haru...
Dialogue: 0,0:05:14.58,0:05:16.91,Yosuga,,0000,0000,0000,,Mọi người, xin lỗi vì đã làm phiền.
Dialogue: 0,0:05:17.32,0:05:18.68,Yosuga,,0000,0000,0000,,Thôi bỏ đi.
Dialogue: 0,0:05:18.76,0:05:21.23,Yosuga,,0000,0000,0000,,Cậu không sao là tốt rồi.
Dialogue: 0,0:05:21.51,0:05:24.19,Yosuga,,0000,0000,0000,,Nhưng mà lúc mới nghe chuyện tớ đã thót cả tim đấy!
Dialogue: 0,0:05:24.61,0:05:27.52,Yosuga,,0000,0000,0000,,Kuranaga-san, cậu cũng biết vụ tớ suýt chết đuối à?
Dialogue: 0,0:05:27.90,0:05:29.71,Yosuga,,0000,0000,0000,,Cái thị trấn này bé tẹo mà.
Dialogue: 0,0:05:31.03,0:05:33.59,Yosuga,,0000,0000,0000,,Nhưng mà Nao lúc đó cũng tuyệt thật đấy.
Dialogue: 0,0:05:34.68,0:05:36.71,Yosuga,,0000,0000,0000,,Không hổ danh là đội trưởng đội bơi kế nhiệm!
Dialogue: 0,0:05:36.71,0:05:38.65,Yosuga,,0000,0000,0000,,Tuyệt? Ý cậu là sao?
Dialogue: 0,0:05:40.34,0:05:43.65,Yosuga,,0000,0000,0000,,Yorihime-senpai với Kasugano-kun...
Dialogue: 0,0:05:44.21,0:05:46.42,Yosuga,,0000,0000,0000,,Hô... hô hấp nhân tạo?
Dialogue: 0,0:05:46.85,0:05:49.05,Yosuga,,0000,0000,0000,,Phải. Môi kề môi.
Dialogue: 0,0:05:49.43,0:05:50.57,Yosuga,,0000,0000,0000,,Ryouhei!
Dialogue: 0,0:06:09.17,0:06:12.72,Yosuga,,0000,0000,0000,,Này. Cho Haru-kun và Sora-chan đấy.
Dialogue: 0,0:06:12.90,0:06:13.73,Yosuga,,0000,0000,0000,,Cám ơn.
Dialogue: 0,0:06:13.93,0:06:17.96,Yosuga,,0000,0000,0000,,Doner Kebab là một trong những món hot của lễ hội mùa hè năm nay đấy.
Dialogue: 0,0:06:18.83,0:06:20.96,Yosuga,,0000,0000,0000,,Doner Kebab sao?
Dialogue: 0,0:06:21.49,0:06:23.13,Yosuga,,0000,0000,0000,,Doner Kebab!
Dialogue: 0,0:06:36.24,0:06:37.76,Yosuga,,0000,0000,0000,,Cũng sắp đến rồi nhỉ...
Dialogue: 0,0:06:37.76,0:06:43.02,Yosuga,,0000,0000,0000,,Ừ. Cái cảm giác chờ lễ hội thế này cũng vui đấy chứ.
Dialogue: 0,0:06:45.72,0:06:46.53,Yosuga,,0000,0000,0000,,Nao-chan.
Dialogue: 0,0:06:48.19,0:06:52.70,Yosuga,,0000,0000,0000,,Anh sẽ nói với Sora về chuyện của chúng mình\N trước lễ hội mùa hè.
Dialogue: 0,0:06:56.51,0:06:58.08,Yosuga,,0000,0000,0000,,Anh không cần phải vội như thế.
Dialogue: 0,0:07:00.06,0:07:03.07,Yosuga,,0000,0000,0000,,Mỗi người đều có một con đường riêng dẫn tới trái tim.
Dialogue: 0,0:07:03.49,0:07:06.85,Yosuga,,0000,0000,0000,,Nếu cuối cùng mọi người đều được vui vẻ thì có phải tốn bao nhiêu thời gian em cũng không ngại.
Dialogue: 0,0:07:08.88,0:07:09.74,Yosuga,,0000,0000,0000,,Nao-chan...
Dialogue: 0,0:07:11.52,0:07:12.29,Yosuga,,0000,0000,0000,,A, xin lỗi.
Dialogue: 0,0:07:16.58,0:07:17.85,Yosuga,,0000,0000,0000,,Sora-chan nhắn à?
Dialogue: 0,0:07:18.49,0:07:19.03,Yosuga,,0000,0000,0000,,Ừ.
Dialogue: 0,0:07:19.95,0:07:21.81,Yosuga,,0000,0000,0000,,Xin lỗi nhé, anh phải về nhà trước.
Dialogue: 0,0:07:22.27,0:07:23.28,Yosuga,,0000,0000,0000,,Thôi, gặp lại em sau!
Dialogue: 0,0:07:23.28,0:07:24.83,Yosuga,,0000,0000,0000,,Ừ, mai gặp lại.
Dialogue: 0,0:07:46.41,0:07:47.13,Yosuga,,0000,0000,0000,,Sora!
Dialogue: 0,0:07:48.00,0:07:49.31,Yosuga,,0000,0000,0000,,Em có thấy khó chịu ở đâu không?
Dialogue: 0,0:07:52.48,0:07:54.29,Yosuga,,0000,0000,0000,,Haru... Anh đã nói...
Dialogue: 0,0:07:55.32,0:07:56.95,Yosuga,,0000,0000,0000,,Anh đã nói anh sẽ quay lại ngay.
Dialogue: 0,0:07:59.45,0:08:01.52,Yosuga,,0000,0000,0000,,Ở với em, đừng đi đâu hết.
Dialogue: 0,0:08:21.43,0:08:22.67,Yosuga,,0000,0000,0000,,Haru, đợi đã!
Dialogue: 0,0:08:24.13,0:08:26.35,Yosuga,,0000,0000,0000,,Vậy tới trường cùng anh đi.
Dialogue: 0,0:08:27.22,0:08:28.20,Yosuga,,0000,0000,0000,,Em không muốn.
Dialogue: 0,0:08:36.11,0:08:39.06,Yosuga,,0000,0000,0000,,Haru không thể bỏ em lại một mình như vậy!
Dialogue: 0,0:08:39.92,0:08:40.82,Yosuga,,0000,0000,0000,,Sora...
Dialogue: 0,0:08:41.04,0:08:42.61,Yosuga,,0000,0000,0000,,Haru-chan, Sora-chan!
Dialogue: 0,0:08:47.05,0:08:48.17,Yosuga,,0000,0000,0000,,Vậy anh định chọn ai?
Dialogue: 0,0:08:49.25,0:08:51.38,Yosuga,,0000,0000,0000,,Ai? Ý em là sao?
Dialogue: 0,0:08:55.44,0:08:56.55,Yosuga,,0000,0000,0000,,Em hỏi anh chọn ai?
Dialogue: 0,0:09:02.95,0:09:04.03,Yosuga,,0000,0000,0000,,Anh đi đây.
Dialogue: 0,0:09:05.80,0:09:08.27,Yosuga,,0000,0000,0000,,Có chuyện gì anh sẽ quay lại.
Dialogue: 0,0:09:11.38,0:09:12.15,Yosuga,,0000,0000,0000,,Haru-chan...
Dialogue: 0,0:09:14.54,0:09:16.20,Yosuga,,0000,0000,0000,,Sora-chan sao thế?
Dialogue: 0,0:09:16.65,0:09:17.51,Yosuga,,0000,0000,0000,,Không sao đâu.
Dialogue: 0,0:09:17.83,0:09:19.43,Yosuga,,0000,0000,0000,,Có thật thế không?
Dialogue: 0,0:09:19.43,0:09:20.64,Yosuga,,0000,0000,0000,,Ừ, ổn cả mà.
Dialogue: 0,0:09:25.49,0:09:28.08,Yosuga,,0000,0000,0000,,Đoạn này là vậy đấy.
Dialogue: 0,0:09:28.08,0:09:29.50,Yosuga,,0000,0000,0000,,Vế trái của phương trình này{\fscx380}-
Dialogue: 0,0:09:44.74,0:09:47.30,Yosuga,,0000,0000,0000,,Vậy chuyện đó là không có thật à?!
Dialogue: 0,0:09:48.28,0:09:52.36,Yosuga,,0000,0000,0000,,Dấu trúng thưởng đó là ngẫu nhiên mà có trên cái que thôi.
Dialogue: 0,0:09:53.14,0:09:55.53,Yosuga,,0000,0000,0000,,Đó là nơi câu chuyện bắt đầu.
Dialogue: 0,0:09:56.00,0:09:57.64,Yosuga,,0000,0000,0000,,Đấy là cái người ta hay gọi là truyền thuyết thành phố ý mà.
Dialogue: 0,0:09:58.59,0:10:01.21,Yosuga,,0000,0000,0000,,Vậy đó, lại chẳng ra đâu vào đâu nữa rồi.
Dialogue: 0,0:10:01.54,0:10:04.27,Yosuga,,0000,0000,0000,,A, trượt rồi. Chị nói đúng.
Dialogue: 0,0:10:05.47,0:10:07.86,Yosuga,,0000,0000,0000,,Em nói bậy cho Sora-chan nghe mất rồi...
Dialogue: 0,0:10:10.53,0:10:11.39,Yosuga,,0000,0000,0000,,Anh về rồi.
Dialogue: 0,0:10:27.28,0:10:30.10,Yosuga,,0000,0000,0000,,Đúng lúc thật đấy, cái này cho anh...
Dialogue: 0,0:10:30.10,0:10:30.89,Yosuga,,0000,0000,0000,,Sora...
Dialogue: 0,0:10:31.06,0:10:31.43,Yosuga,,0000,0000,0000,,Hả?
Dialogue: 0,0:10:31.81,0:10:32.49,Yosuga,,0000,0000,0000,,À...
Dialogue: 0,0:10:34.40,0:10:37.26,Yosuga,,0000,0000,0000,,Sora bỏ đi mất rồi...
Dialogue: 0,0:10:39.16,0:10:43.43,Yosuga,,0000,0000,0000,,Nhưng không phải anh đã nó rằng Sora-chan không sao hết, rằng mọi chuyện vẫn ổn sao?!
Dialogue: 0,0:10:48.34,0:10:49.85,Yosuga,,0000,0000,0000,,Dù sao thì cũng phải tìm Sora-chan trước đã.
Dialogue: 0,0:10:50.60,0:10:51.10,Yosuga,,0000,0000,0000,,Ừ!
Dialogue: 0,0:11:19.79,0:11:21.13,Yosuga,,0000,0000,0000,,Không gửi được sao?
Dialogue: 0,0:11:21.87,0:11:22.63,Yosuga,,0000,0000,0000,,Ừ...
Dialogue: 0,0:11:22.80,0:11:24.69,Yosuga,,0000,0000,0000,,Tiếp theo phải tìm ở đâu đây?
Dialogue: 0,0:11:25.50,0:11:26.80,Yosuga,,0000,0000,0000,,Haru-kun!
Dialogue: 0,0:11:41.53,0:11:45.72,Yosuga,,0000,0000,0000,,Quả nhiên... là xe của Haru-kun phải không?
Dialogue: 0,0:11:47.23,0:11:49.19,Yosuga,,0000,0000,0000,,Sora-chan sao rồi?
Dialogue: 0,0:11:50.43,0:11:51.80,Yosuga,,0000,0000,0000,,Là lỗi của tớ.
Dialogue: 0,0:11:52.93,0:11:56.42,Yosuga,,0000,0000,0000,,Tớ đã dồn Sora vào đường cùng.
Dialogue: 0,0:12:11.90,0:12:14.80,Yosuga,,0000,0000,0000,,Kasugano-kun? Tớ đang ở nhà ga đây.
Dialogue: 0,0:12:15.32,0:12:15.89,Yosuga,,0000,0000,0000,,Không có.
Dialogue: 0,0:12:16.91,0:12:18.23,Yosuga,,0000,0000,0000,,Sora-chan!
Dialogue: 0,0:12:18.93,0:12:20.27,Yosuga,,0000,0000,0000,,Sora-chan!
Dialogue: 0,0:12:21.17,0:12:22.44,Yosuga,,0000,0000,0000,,Sora-chan!
Dialogue: 0,0:12:27.40,0:12:28.85,Yosuga,,0000,0000,0000,,Vậy ạ...
Dialogue: 0,0:12:45.83,0:12:47.85,Yosuga,,0000,0000,0000,,Sora!
Dialogue: 0,0:13:11.91,0:13:15.29,Yosuga,,0000,0000,0000,,S-Sora-chan... Cám ơn trời...
Dialogue: 0,0:13:20.78,0:13:21.92,Yosuga,,0000,0000,0000,,{\i1}Sao thế?
Dialogue: 0,0:13:24.90,0:13:26.43,Yosuga,,0000,0000,0000,,{\i1}Đi đi!
Dialogue: 0,0:13:29.95,0:13:31.49,Yosuga,,0000,0000,0000,,{\i1}Tôi bảo cậu đi đi!
Dialogue: 0,0:13:35.38,0:13:36.74,Yosuga,,0000,0000,0000,,Sao lại là chị chứ?
Dialogue: 0,0:13:43.67,0:13:46.30,Yosuga,,0000,0000,0000,,Về thôi. Haru-chan đang tìm em khắp nơi đấy.
Dialogue: 0,0:13:49.56,0:13:50.88,Yosuga,,0000,0000,0000,,Sora-chan...
Dialogue: 0,0:13:51.09,0:13:51.99,Yosuga,,0000,0000,0000,,Tôi không về đâu!
Dialogue: 0,0:13:54.62,0:13:56.45,Yosuga,,0000,0000,0000,,Đợi đã, Sora-chan!
Dialogue: 0,0:13:59.63,0:14:02.38,Yosuga,,0000,0000,0000,,Đợi Haru đến, tôi và anh ấy sẽ cùng nhau rời khỏi cái thị trấn này.
Dialogue: 0,0:14:02.38,0:14:03.43,Yosuga,,0000,0000,0000,,Rời khỏi đây?
Dialogue: 0,0:14:04.57,0:14:07.46,Yosuga,,0000,0000,0000,,Haru sẽ bỏ rơi tôi nếu cứ tiếp tục ở lại nơi này!
Dialogue: 0,0:14:09.07,0:14:12.05,Yosuga,,0000,0000,0000,,Anh ấy sẽ... bỏ rơi em?
Dialogue: 0,0:14:13.63,0:14:17.00,Yosuga,,0000,0000,0000,,Haru đã luôn luôn bên cạnh tôi...
Dialogue: 0,0:14:17.82,0:14:22.71,Yosuga,,0000,0000,0000,,Nhưng Haru đã thay đổi... từ khi gặp lại chị!
Dialogue: 0,0:14:58.71,0:14:59.84,Yosuga,,0000,0000,0000,,Bến xe...
Dialogue: 0,0:15:01.75,0:15:02.65,Yosuga,,0000,0000,0000,,Sora-chan!
Dialogue: 0,0:15:04.49,0:15:05.43,Yosuga,,0000,0000,0000,,Sora-chan!
Dialogue: 0,0:15:07.27,0:15:08.20,Yosuga,,0000,0000,0000,,Không...
Dialogue: 0,0:15:10.43,0:15:12.55,Yosuga,,0000,0000,0000,,Đó là kỉ vật của mẹ...
Dialogue: 0,0:15:44.04,0:15:45.21,Yosuga,,0000,0000,0000,,Nao-chan...
Dialogue: 0,0:16:19.41,0:16:21.63,Yosuga,,0000,0000,0000,,Em rất sợ phải ở một mình.
Dialogue: 0,0:16:23.30,0:16:25.27,Yosuga,,0000,0000,0000,,Từ sau khi cha và mẹ mất đi...
Dialogue: 0,0:16:26.58,0:16:28.21,Yosuga,,0000,0000,0000,,Bọn em đã tới đây.
Dialogue: 0,0:16:28.71,0:16:30.28,Yosuga,,0000,0000,0000,,Nếu phải mất nốt Haru...
Dialogue: 0,0:16:31.76,0:16:32.85,Yosuga,,0000,0000,0000,,Sora-chan...
Dialogue: 0,0:16:32.85,0:16:36.21,Yosuga,,0000,0000,0000,,Dù biết rõ làm thế này không thể ngăn được Haru.
Dialogue: 0,0:16:36.61,0:16:41.07,Yosuga,,0000,0000,0000,,Nhưng em đã quá sợ hãi khi nghĩ đến chuyện sẽ bị Haru bỏ rơi...
Dialogue: 0,0:16:58.58,0:17:00.38,Yosuga,,0000,0000,0000,,Sora? Chuẩn bị xong chưa?
Dialogue: 0,0:17:05.78,0:17:06.95,Yosuga,,0000,0000,0000,,Em không tự mặc được.
Dialogue: 0,0:17:07.63,0:17:08.57,Yosuga,,0000,0000,0000,,Anh chịu thôi.
Dialogue: 0,0:17:08.57,0:17:11.42,Yosuga,,0000,0000,0000,,Vậy sao không mời bà chị hàng xóm sang giúp?
Dialogue: 0,0:17:17.81,0:17:18.74,Yosuga,,0000,0000,0000,,Sora...
Dialogue: 0,0:17:34.59,0:17:36.07,Yosuga,,0000,0000,0000,,Ồ!
Dialogue: 0,0:17:36.48,0:17:38.96,Yosuga,,0000,0000,0000,,Dễ thương, dễ thương quá!
Dialogue: 0,0:17:38.96,0:17:41.61,Yosuga,,0000,0000,0000,,Mọi người ai cũng dễ thương hết!
Dialogue: 0,0:17:42.08,0:17:45.87,Yosuga,,0000,0000,0000,,Thích thật đấy. Tớ cũng muốn mặc yukata nữa.
Dialogue: 0,0:17:46.95,0:17:49.97,Yosuga,,0000,0000,0000,,Cậu còn phải múa điệu Kagura nữa mà, sao mà mặc được.
Dialogue: 0,0:17:53.13,0:17:54.12,Yosuga,,0000,0000,0000,,Xin lỗi!
Dialogue: 0,0:17:54.37,0:17:55.43,Yosuga,,0000,0000,0000,,Xin chào!
Dialogue: 0,0:17:55.63,0:17:56.73,Yosuga,,0000,0000,0000,,Muộn quá đấy.
Dialogue: 0,0:17:56.73,0:17:59.67,Yosuga,,0000,0000,0000,,Xin lỗi mà. Tại gặp chút khó khăn.
Dialogue: 0,0:17:59.90,0:18:01.17,Yosuga,,0000,0000,0000,,Sora, tới đây nào.
Dialogue: 0,0:18:08.37,0:18:10.06,Yosuga,,0000,0000,0000,,C-Chào buổi tối...
Dialogue: 0,0:18:10.39,0:18:13.34,Yosuga,,0000,0000,0000,,Sora-san,chào buổi tối! Bộ yukata của cậu trông dễ thương thật đấy!
Dialogue: 0,0:18:13.41,0:18:14.76,Yosuga,,0000,0000,0000,,C-Cám ơn...
Dialogue: 0,0:18:14.76,0:18:19.48,Yosuga,,0000,0000,0000,,Sora-chan, có chuyện gì không hiểu thì cứ tự nhiên mà hỏi anh nhé!
Dialogue: 0,0:18:19.69,0:18:23.08,Yosuga,,0000,0000,0000,,Nhờ Nakazato-san thì ngang với việc tự bẫy mình trong cái mê cung không lối thoát rồi.
Dialogue: 0,0:18:23.38,0:18:25.47,Yosuga,,0000,0000,0000,,Này, đừng có phá miếng ăn của tớ chứ!
Dialogue: 0,0:18:25.80,0:18:28.02,Yosuga,,0000,0000,0000,,Vậy thì hỏi mình nè.
Dialogue: 0,0:18:28.81,0:18:29.84,Yosuga,,0000,0000,0000,,Ừm.
Dialogue: 0,0:18:30.28,0:18:31.42,Yosuga,,0000,0000,0000,,Thua rồi.
Dialogue: 0,0:18:34.01,0:18:36.11,Yosuga,,0000,0000,0000,,Đi thôi! Không thì họ sẽ bán hết đó!
Dialogue: 0,0:18:36.50,0:18:37.86,Yosuga,,0000,0000,0000,,Doner Kebab ấy!
Dialogue: 0,0:18:38.03,0:18:40.01,Yosuga,,0000,0000,0000,,Đ-Đợi một chút.
Dialogue: 0,0:18:42.22,0:18:48.45,Yosuga,,0000,0000,0000,,"Mấy chuyện này mà để anh làm thì lâu lắm, kêu Nao-chan sang giúp thì hơn."
Dialogue: 0,0:18:48.76,0:18:49.31,Yosuga,,0000,0000,0000,,Hả?
Dialogue: 0,0:18:51.43,0:18:52.98,Yosuga,,0000,0000,0000,,Haru nói vậy đấy.
Dialogue: 0,0:18:54.81,0:18:56.17,Yosuga,,0000,0000,0000,,N-Này!
Dialogue: 0,0:18:56.18,0:18:57.34,Yosuga,,0000,0000,0000,,Đi thôi!
Dialogue: 0,0:18:59.41,0:19:00.26,Yosuga,,0000,0000,0000,,Haru-chan?
Dialogue: 0,0:19:00.26,0:19:02.63,Yosuga,,0000,0000,0000,,À... thì...
Dialogue: 0,0:19:03.28,0:19:04.79,Yosuga,,0000,0000,0000,,Sora nói đấy...
Dialogue: 0,0:19:06.21,0:19:08.20,Yosuga,,0000,0000,0000,,Nó bảo anh gọi em sang.
Dialogue: 0,0:19:09.19,0:19:10.37,Yosuga,,0000,0000,0000,,Ra vậy...
Dialogue: 0,0:19:13.97,0:19:19.86,Yosuga,,0000,0000,0000,,Vụ trúng thưởng trên cái que kem thì mình nhầm,\Nnhưng chọn chai Ramune ngon nhất thì mình biết đó.
Dialogue: 0,0:19:21.53,0:19:26.72,Yosuga,,0000,0000,0000,,Chai nào có đáy tròn thì sẽ rất ngọt, chai nào vuông hơn thì sẽ nhiều bọt.
Dialogue: 0,0:20:05.55,0:20:06.47,Yosuga,,0000,0000,0000,,Nao-chan...
Dialogue: 0,0:20:14.25,0:20:16.21,Yosuga,,0000,0000,0000,,Đừng tháo đai lưng của em mà...
Dialogue: 0,0:22:05.38,0:22:07.74,Yosuga,,0000,0000,0000,,Tôi là Nogizaka Motoka. Nhiệm vụ hôm nay của tôi là...
Dialogue: 0,0:22:08.30,0:22:11.18,Yosuga,,0000,0000,0000,,...một lần nữa đưa món đồ để quên tới cho cô chủ!
Dialogue: 0,0:22:12.46,0:22:17.12,Yosuga,,0000,0000,0000,,Như đã đề cập tới nhiều lần, vế trái{\fscx380}-
Dialogue: 0,0:22:13.73,0:22:14.68,Yosuga,,0000,0000,0000,,Tiểu thư.
Dialogue: 0,0:22:17.80,0:22:19.23,Yosuga,,0000,0000,0000,,Nhiệm vụ hoàn thành!
Dialogue: 0,0:22:20.29,0:22:21.45,Yosuga,,0000,0000,0000,,Haruka-kun!
Dialogue: 0,0:22:28.77,0:22:30.28,Yosuga,,0000,0000,0000,,Goodbye, Honey!
Dialogue: 0,0:22:40.63,0:22:42.37,Yosuga,,0000,0000,0000,,May quá, em tỉnh lại rồi.
Dialogue: 0,0:22:42.79,0:22:45.11,Yosuga,,0000,0000,0000,,Haruka-kun, là anh đưa em tới đây sao?
Dialogue: 0,0:22:45.11,0:22:47.87,Yosuga,,0000,0000,0000,,Mọi người biết mối quan hệ của chúng ta mất rồi.
Dialogue: 0,0:22:48.94,0:22:52.52,Yosuga,,0000,0000,0000,,Bởi vì anh đã đưa em tới đây, Motoka-san...
Dialogue: 0,0:22:53.54,0:22:54.90,Yosuga,,0000,0000,0000,,Cứ để tôi lo cho cô ấy!
Dialogue: 0,0:22:59.55,0:23:03.09,Yosuga,,0000,0000,0000,,Có phiền không nếu anh nói ra điều mà lâu nay anh vẫn muốn nói với em?
Dialogue: 0,0:23:03.09,0:23:04.67,Yosuga,,0000,0000,0000,,L-Là gì vậy?
Dialogue: 0,0:23:05.82,0:23:10.01,Yosuga,,0000,0000,0000,,Anh nhỏ tuổi hơn em, không đáng tin cậy,\N không việc làm, cũng không có thu nhập ổn định.
Dialogue: 0,0:23:11.21,0:23:12.00,Yosuga,,0000,0000,0000,,Nhưng anh{\fscx380}-
Dialogue: 0,0:23:13.99,0:23:16.72,Yosuga,,0000,0000,0000,,Này! Sao mọi người lại ở đây?
Dialogue: 0,0:23:16.84,0:23:19.03,Yosuga,,0000,0000,0000,,Bọn tớ tò mò mà!
Dialogue: 0,0:23:27.81,0:23:30.17,Yosuga,,0000,0000,0000,,Phải rồi... Để anh tiếp tục câu ban nãy.
Dialogue: 0,0:23:31.04,0:23:31.89,Yosuga,,0000,0000,0000,,Em rất sẵn lòng được nghe.
Dialogue: 0,0:23:34.26,0:23:38.56,Yosuga,,0000,0000,0000,,Anh nhỏ tuổi hơn em, không đáng tin cậy,\N không việc làm, cũng không có thu nhập ổn định.
Dialogue: 0,0:23:39.06,0:23:40.07,Yosuga,,0000,0000,0000,,Nhưng anh{\fscx380}-
Dialogue: 0,0:23:42.92,0:23:44.23,Yosuga,,0000,0000,0000,,Cái nhạc chuông này...
Dialogue: 0,0:23:44.85,0:23:47.46,Yosuga,,0000,0000,0000,,Là người đàn ông ở thành phố.{ Nghe không hay lắm nhưng không nói rõ ý ra thì không được >< }
