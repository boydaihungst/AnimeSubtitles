Dialogue: 0,0:01:42.00,0:01:45.92,OP Romaji,,0000,0000,0000,,Isso subete ubai satte
Dialogue: 0,0:01:45.92,0:01:49.73,OP Romaji,,0000,0000,0000,,Futari dake no abunai Game
Dialogue: 0,0:01:49.73,0:01:53.20,OP Romaji,,0000,0000,0000,,Love is War
Dialogue: 0,0:01:53.20,0:01:57.20,OP Romaji,,0000,0000,0000,,Love is War {\fad(0,2000)}
Dialogue: 0,0:00:30.84,0:00:35.12,OP,,0000,0000,0000,,Hãy yêu em, ôi chàng ơi, hỡi chàng ơi
Dialogue: 0,0:00:35.12,0:00:38.93,OP,,0000,0000,0000,,Em sắp không chịu nổi nữa rồi
Dialogue: 0,0:00:38.93,0:00:42.48,OP,,0000,0000,0000,,Một trò chơi nguy hiểm chỉ dành cho hai ta
Dialogue: 0,0:00:42.48,0:00:46.66,OP,,0000,0000,0000,,Love is War
Dialogue: 0,0:00:49.38,0:00:56.47,OP,,0000,0000,0000,,Bị cuốn vào vòng xoáy, mọi chuyện kỳ quái bắt đầu xảy ra
Dialogue: 0,0:00:56.89,0:01:03.23,OP,,0000,0000,0000,,Điềm báo quái ác của tình yêu khiến em rối bời
Dialogue: 0,0:01:03.23,0:01:11.16,OP,,0000,0000,0000,,Hai đầu ngón tay đã chờ sẵn, chỉ chờ duyên số ra hiệu lệnh
Dialogue: 0,0:01:11.16,0:01:14.56,OP,,0000,0000,0000,,Em đang muốn nói với anh rằng...
Dialogue: 0,0:01:14.56,0:01:17.90,OP,,0000,0000,0000,,bức tường ở trong trái tim em...
Dialogue: 0,0:01:17.90,0:01:22.72,OP,,0000,0000,0000,,hãy phá vỡ bằng một lời tỏ tình đi
Dialogue: 0,0:01:22.72,0:01:27.17,OP,,0000,0000,0000,,Hãy yêu em, ôi chàng ơi, hỡi chàng ơi
Dialogue: 0,0:01:27.17,0:01:30.97,OP,,0000,0000,0000,,Hãy nói với em đây không phải là một giấc mơ...
Dialogue: 0,0:01:30.97,0:01:34.81,OP,,0000,0000,0000,,Nè chàng ơi, hỡi chàng ơi
Dialogue: 0,0:01:34.81,0:01:38.54,OP,,0000,0000,0000,,...bằng giọng nói cuốn hút điên đảo ấy
Dialogue: 0,0:01:38.54,0:01:42.00,OP,,0000,0000,0000,,Cảm xúc này không thể kìm nén được nữa rồi
Dialogue: 0,0:01:42.00,0:01:45.92,OP,,0000,0000,0000,,Hãy đến cướp lấy trái tim em đi
Dialogue: 0,0:01:45.92,0:01:49.73,OP,,0000,0000,0000,,Trò chơi nguy hiểm chỉ dành cho hai ta
