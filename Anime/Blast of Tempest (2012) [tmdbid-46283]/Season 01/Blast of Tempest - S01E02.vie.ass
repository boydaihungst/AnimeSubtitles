Dialogue: 0,0:01:40.24,0:01:41.70,Sign2A,SIGN,0000,0000,0000,,{\an9\u1\bord0}lần tới chúng ta cùng làm nhé.{\u0}{:@)}
Dialogue: 0,0:01:43.04,0:01:44.05,Default - italics,AIKA,0000,0000,0000,,Mahiro?
Dialogue: 0,0:01:46.26,0:01:49.30,Default - italics,AIKA,0000,0000,0000,,Cảm giác khi hôn như thế nào?
Dialogue: 0,0:01:50.44,0:01:53.30,Default - italics,MAHIRO,0000,0000,0000,,Sao tự nhiên em lại có hứng thú với vấn đề đó?
Dialogue: 0,0:01:53.65,0:01:55.63,Default - italics,AIKA,0000,0000,0000,,Em chưa bao giờ hôn mà.
Dialogue: 0,0:01:56.15,0:01:59.01,Default - italics,AIKA,0000,0000,0000,,Và em không muốn lần đầu của mình lại có gì trúc trắc.
Dialogue: 0,0:01:59.01,0:02:01.24,Default - italics,YOSHINO,0000,0000,0000,,Anh cũng chưa bao giờ làm chuyện đó...
Dialogue: 0,0:02:01.24,0:02:03.43,Default - italics,AIKA,0000,0000,0000,,Yoshino-san chưa hôn ai thì có gì là lạ.
Dialogue: 0,0:02:05.19,0:02:06.93,Default - italics,AIKA,0000,0000,0000,,Vậy nó thế nào ạ?
Dialogue: 0,0:02:07.39,0:02:10.45,Default - italics,AIKA,0000,0000,0000,,Là anh trai thì thi thoảng cũng nên cho em gái một vài lời khuyên chứ.
Dialogue: 0,0:02:13.11,0:02:15.42,Default - italics,MAHIRO,0000,0000,0000,,Còn nhỏ mà tò mò chuyện hôn hít làm gì.
Dialogue: 0,0:02:15.42,0:02:18.50,Default - italics,MAHIRO,0000,0000,0000,,Thêm vài tuổi nữa đi rồi hãy đến hỏi anh.{clgt}
Dialogue: 0,0:02:21.14,0:02:23.48,Default - italics,AIKA,0000,0000,0000,,Anh hai đúng là vô dụng mà.
Dialogue: 0,0:02:29.42,0:02:32.57,Default - italics,MAHIRO,0000,0000,0000,,Bạn trai còn chưa có, nó hỏi chuyện đó làm quái gì chứ?
Dialogue: 0,0:02:32.57,0:02:34.17,Default - italics,MAHIRO,0000,0000,0000,,Mà cũng đừng hòng tớ cho thằng nào xớ rớ.
Dialogue: 0,0:02:34.17,0:02:35.77,Default - italics,YOSHINO,0000,0000,0000,,Không cho phép thế nào được.
Dialogue: 0,0:02:35.77,0:02:37.97,Default - italics,MAHIRO,0000,0000,0000,,Không được là không được... Nó là em gái tớ mà.
Dialogue: 0,0:02:38.61,0:02:41.16,Default - italics,YOSHINO,0000,0000,0000,,Đấy mà là lí do à?
Dialogue: 0,0:02:41.16,0:02:42.20,Default - italics,MAHIRO,0000,0000,0000,,Ờ đấy.
Dialogue: 0,0:02:48.89,0:02:51.31,Sign2A,SIGN,0000,0000,0000,,{\an9}Người gửi: Bạn gái \NTiêu đề: Lần tới \N\NYoshino-san. \NLần đầu của\Ncả hai ta đấy, \N chúng ta cùng làm nhé.
Dialogue: 0,0:03:04.73,0:03:05.76,Default - italics,YOSHINO,0000,0000,0000,,Ngày ấy...
Dialogue: 0,0:03:06.72,0:03:09.48,Default - italics,YOSHINO,0000,0000,0000,,một cô gái bỗng dưng bị sát hại.
Dialogue: 0,0:03:12.28,0:03:13.54,Default - italics,YOSHINO,0000,0000,0000,,Ngày ấy...
Dialogue: 0,0:03:13.95,0:03:16.03,Default - italics,YOSHINO,0000,0000,0000,,một cô công chúa phù thủy
Dialogue: 0,0:03:16.03,0:03:18.68,Default - italics,YOSHINO,0000,0000,0000,,bị đóng thùng thả trôi dạt vào đảo hoang.
Dialogue: 0,0:03:19.59,0:03:22.19,Default - italics,CREEPIES,0000,0000,0000,,{\an8}Trở lại, trở lại.
Dialogue: 0,0:03:22.19,0:03:24.37,Default - italics,CREEPIES,0000,0000,0000,,{\an8}Kết trái, kết trái.
Dialogue: 0,0:03:24.93,0:03:27.56,Default - italics,CREEPIES,0000,0000,0000,,{\an8}Diễm lệ, diễm lệ.
Dialogue: 0,0:03:27.56,0:03:29.93,Default - italics,CREEPIES,0000,0000,0000,,{\an8}Kết trái, kết trái.
Dialogue: 0,0:03:31.34,0:03:33.20,Default - italics,YOSHINO,0000,0000,0000,,Và ngày ấy...
Dialogue: 0,0:03:32.06,0:03:44.32,Default - italics,CREEPIES,0000,0000,0000,,{\an8}Trở lại, trở lại, trở lại, trở lại, trở lại.
Dialogue: 0,0:03:46.26,0:03:51.57,Default - italics,YOSHINO,0000,0000,0000,,Một cuộc chiến vượt thời không,\Nbị bao phủ bởi sự báo thù và ma thuật đã bắt đầu.
Dialogue: 0,0:03:53.42,0:03:56.42,Title,SIGN,0000,0000,0000,,Tập 2 \NAnh ta nói cô ấy rất đẹp
Dialogue: 0,0:04:02.90,0:04:03.97,Default,MAHIRO,0000,0000,0000,,Cầm lấy này.
Dialogue: 0,0:04:03.97,0:04:05.25,Default,YOSHINO,0000,0000,0000,,Thôi...
Dialogue: 0,0:04:05.25,0:04:06.64,Default,YOSHINO,0000,0000,0000,,Tớ không có tiền.
Dialogue: 0,0:04:06.64,0:04:07.89,Default,MAHIRO,0000,0000,0000,,Thật thà quá đấy.
Dialogue: 0,0:04:08.87,0:04:10.78,Default,MAHIRO,0000,0000,0000,,Đừng lo nhiều chuyện thế.
Dialogue: 0,0:04:10.78,0:04:11.95,Default,MAHIRO,0000,0000,0000,,Tớ đã nói rồi...
Dialogue: 0,0:04:11.95,0:04:14.28,Default,,0000,0000,0000,,Tớ sẽ cứu lấy thế giới.
Dialogue: 0,0:04:16.67,0:04:19.44,Default,YOSHINO,0000,0000,0000,,Tớ không biết phải nói thế nào nữa, mọi chuyện bỗng dưng trở nên thật điên rồ.
Dialogue: 0,0:04:20.24,0:04:22.74,Default,YOSHINO,0000,0000,0000,,Như trái cây ban nãy
Dialogue: 0,0:04:23.41,0:04:27.45,Default,YOSHINO,0000,0000,0000,,là một phần của thứ mà gia tộc Kusaribe muốn triệu hồi phải không?
Dialogue: 0,0:04:28.84,0:04:30.13,Default,MAHIRO,0000,0000,0000,,Ờ.
Dialogue: 0,0:04:30.13,0:04:34.59,Default,MAHIRO,0000,0000,0000,,Hiện giờ chúng xuất hiện ở khắp nơi trên đất nước và cùng hướng về một địa điểm.
Dialogue: 0,0:04:34.59,0:04:39.22,Default,MAHIRO,0000,0000,0000,,Một khi tập trung lại, chúng sẽ hợp nhất và quay lại hình thái đích thực.
Dialogue: 0,0:04:40.06,0:04:41.84,Default,MAHIRO,0000,0000,0000,,Và thế là chúng ta tiêu tùng.
Dialogue: 0,0:04:41.84,0:04:44.34,Default,MAHIRO,0000,0000,0000,,Mọi quy luật của thế giới sẽ bị đảo lộn.
Dialogue: 0,0:04:44.73,0:04:47.93,Default,YOSHINO,0000,0000,0000,,Cứ thế này thì không phải chúng ta tiêu chắc rồi sao?
Dialogue: 0,0:04:48.35,0:04:52.10,Default,YOSHINO,0000,0000,0000,,Mỗi khi thứ đó xuất hiện, hắc thiết dịch sẽ bùng phát phải không?
Dialogue: 0,0:04:52.71,0:04:57.36,Default,MAHIRO,0000,0000,0000,,Mới chỉ có khoảng mười tới hai mươi nạn nhân thôi, mọi chuyện chưa tới nỗi tệ lắm đâu.
Dialogue: 0,0:04:58.15,0:05:00.28,Default,HAKAZE,0000,0000,0000,,Yoshino phải không nhỉ?
Dialogue: 0,0:05:01.29,0:05:04.17,Default,HAKAZE,0000,0000,0000,,Không việc gì phải sợ, có tôi ở đây rồi.
Dialogue: 0,0:05:04.17,0:05:06.69,Default,HAKAZE,0000,0000,0000,,Tôi, Kusaribe Hakaze, phù thủy vĩ đại nhất,
Dialogue: 0,0:05:06.69,0:05:08.84,Default,HAKAZE,0000,0000,0000,,sẽ không bao giờ để bọn chúng được toại nguyện.
Dialogue: 0,0:05:09.36,0:05:11.37,Default,YOSHINO,0000,0000,0000,,Tôi có thể hỏi lại chút được không?
Dialogue: 0,0:05:12.17,0:05:15.32,Default,YOSHINO,0000,0000,0000,,Có một gia tộc phù thủy tên Kusaribe,
Dialogue: 0,0:05:15.32,0:05:18.92,Default,YOSHINO,0000,0000,0000,,và rồi mâu thuẫn trong gia tộc dẫn tới việc tranh giành quyền lực.
Dialogue: 0,0:05:18.92,0:05:20.32,Default,HAKAZE,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:05:20.32,0:05:21.38,Default,YOSHINO,0000,0000,0000,,Kết quả là,
Dialogue: 0,0:05:21.38,0:05:25.99,Default,YOSHINO,0000,0000,0000,,Người thừa kế gia tộc là cô, công chúa tên Hakaze-san, bị rơi vào bẫy của Samon,
Dialogue: 0,0:05:25.99,0:05:29.39,Default,YOSHINO,0000,0000,0000,,và giờ đang mắc kẹt tại một hoang đảo, miễn cưỡng sử dụng được một chút ma thuật.
Dialogue: 0,0:05:29.39,0:05:31.18,Default,HAKAZE,0000,0000,0000,,Đừng có nói như thể tôi là đồ ngốc thế!
Dialogue: 0,0:05:31.18,0:05:34.48,Default,HAKAZE,0000,0000,0000,,Người duy nhất có thể ngăn chặn âm mưu của Samon là tôi!
Dialogue: 0,0:05:34.48,0:05:38.65,Default,YOSHINO,0000,0000,0000,,Nhưng ma thuật duy nhất cô có thể sử dụng lúc này là nói chuyện thông qua con hình nhân...
Dialogue: 0,0:05:39.06,0:05:40.32,Default,YOSHINO,0000,0000,0000,,Phải không?
Dialogue: 0,0:05:40.32,0:05:41.49,Default,HAKAZE,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:05:43.61,0:05:44.74,Default,YOSHINO,0000,0000,0000,,Thôi được rồi.
Dialogue: 0,0:05:45.10,0:05:46.69,Default,HAKAZE,0000,0000,0000,,Giờ mới hiểu sao?
Dialogue: 0,0:05:46.69,0:05:48.49,Default,HAKAZE,0000,0000,0000,,Cậu có vẻ chậm hiểu quá nhỉ?
Dialogue: 0,0:05:49.07,0:05:50.69,Default,MAHIRO,0000,0000,0000,,Giờ tụi mình cũng đi thôi.
Dialogue: 0,0:05:52.03,0:05:52.91,Default,YOSHINO,0000,0000,0000,,Đi đâu?
Dialogue: 0,0:05:53.41,0:05:55.54,Default,MAHIRO,0000,0000,0000,,Tới nơi mọi chuyện bắt đầu.
Dialogue: 0,0:06:05.29,0:06:08.03,Default,MAHIRO,0000,0000,0000,,Hakaze, nhớ phải giữ lời hứa đấy.
Dialogue: 0,0:06:08.03,0:06:09.05,Default,HAKAZE,0000,0000,0000,,Hử?
Dialogue: 0,0:06:09.05,0:06:12.10,Default,HAKAZE,0000,0000,0000,,À, cậu đã về nhà rồi đấy hả...
Dialogue: 0,0:06:12.10,0:06:12.89,Default,HAKAZE,0000,0000,0000,,Nếu vậy thì...
Dialogue: 0,0:06:12.89,0:06:15.55,Default,HAKAZE,0000,0000,0000,,Tới chính xác nơi xảy ra vụ việc.
Dialogue: 0,0:06:15.55,0:06:17.12,Default,HAKAZE,0000,0000,0000,,Chúng ta có thể bắt đầu từ đó.
Dialogue: 0,0:06:17.86,0:06:18.94,Default,MAHIRO,0000,0000,0000,,Mở cửa đi.
Dialogue: 0,0:06:19.60,0:06:22.50,Default,HAKAZE,0000,0000,0000,,Tôi có thể truy ra lai lịch và đường thoát thân.
Dialogue: 0,0:06:23.03,0:06:25.59,Default,HAKAZE,0000,0000,0000,,Nhưng nếu cậu đòi hỏi hơn thì sẽ khó đấy.
Dialogue: 0,0:06:26.86,0:06:27.77,Default,MAHIRO,0000,0000,0000,,Sao thế?
Dialogue: 0,0:06:27.77,0:06:29.57,Default,YOSHINO,0000,0000,0000,,À, không...
Dialogue: 0,0:06:32.93,0:06:36.55,Default - italics,YOSHINO,0000,0000,0000,,Đây là nơi mọi chuyện bắt đầu.
Dialogue: 0,0:07:00.07,0:07:02.89,Default - italics,YOSHINO,0000,0000,0000,,Ngay tại nơi này, Aika-chan đã...
Dialogue: 0,0:07:02.89,0:07:05.36,Default,MAHIRO,0000,0000,0000,,Tới rồi, Hakaze.
Dialogue: 0,0:07:05.36,0:07:06.51,Default,HAKAZE,0000,0000,0000,,Phù bảo.{Cái này gọi phù bảo chuẩn hơn, nó giúp người ta sử dụng ma thuật mà, bùa bảo hộ là cái cứu cánh lúc sắp chết thôi}
Dialogue: 0,0:07:07.60,0:07:09.77,Default,HAKAZE,0000,0000,0000,,Có thấy con dao ở đó không?
Dialogue: 0,0:07:09.77,0:07:13.24,Default,HAKAZE,0000,0000,0000,,Truy dấu thủ phạm cần một loại ma thuật đặc biệt.
Dialogue: 0,0:07:13.24,0:07:14.72,Default,HAKAZE,0000,0000,0000,,Một con dao là tốt nhất.
Dialogue: 0,0:07:14.72,0:07:15.85,Default,YOSHINO,0000,0000,0000,,Phù bảo?
Dialogue: 0,0:07:16.54,0:07:18.93,Default,MAHIRO,0000,0000,0000,,Những vật dụng mang trong mình sức mạnh ma thuật.
Dialogue: 0,0:07:18.93,0:07:19.87,Default,YOSHINO,0000,0000,0000,,Ma thuật?
Dialogue: 0,0:07:20.75,0:07:24.77,Default,MAHIRO,0000,0000,0000,,Để phòng khi không thể sử dụng ma thuật,
Dialogue: 0,0:07:24.77,0:07:27.25,Default,MAHIRO,0000,0000,0000,,Hakaze đã cất giấu phù bảo ở rất nhiều nơi,
Dialogue: 0,0:07:27.25,0:07:30.32,Default,MAHIRO,0000,0000,0000,,những nơi mà không ai trong gia tộc có thể tìm ra.
Dialogue: 0,0:07:31.41,0:07:34.33,Default,MAHIRO,0000,0000,0000,,Đeo nó vào, sao cho nó tiếp xúc với da thịt.
Dialogue: 0,0:07:34.33,0:07:36.85,Default,MAHIRO,0000,0000,0000,,Vậy là đã có thể sử dụng những ma thuật đơn giản,
Dialogue: 0,0:07:36.85,0:07:39.35,Default,,0000,0000,0000,,chỉ cần được Hakaze cho phép nữa là xong.
Dialogue: 0,0:07:39.35,0:07:40.56,Default,MAHIRO,0000,0000,0000,,Nhưng mà,
Dialogue: 0,0:07:43.74,0:07:46.06,Default,MAHIRO,0000,0000,0000,,mỗi vật bị giới hạn bởi một số lần dùng nhất định.
Dialogue: 0,0:07:46.62,0:07:50.49,Default,YOSHINO,0000,0000,0000,,Liệu chúng ta có thể ngăn chặn phù thủy thứ thiệt chỉ bằng mấy thứ này?
Dialogue: 0,0:07:50.85,0:07:53.80,Default,HAKAZE,0000,0000,0000,,Nếu các cậu không làm thì chẳng còn ai có thể ngăn chặn Samon.
Dialogue: 0,0:07:54.32,0:07:56.49,Default,HAKAZE,0000,0000,0000,,Suy cho cùng thì chỉ có ma thuật mới đấu lại được ma thuật.
Dialogue: 0,0:08:04.84,0:08:06.96,Default,MAHIRO,0000,0000,0000,,Hakaze, trao quyền sử dụng ma thuật đi.
Dialogue: 0,0:08:06.96,0:08:07.85,Default,HAKAZE,0000,0000,0000,,Được rồi.
Dialogue: 0,0:08:07.85,0:08:08.96,Default,HAKAZE,0000,0000,0000,,Đừng có buông phù bảo.
Dialogue: 0,0:08:09.33,0:08:11.75,Default - italics,HAKAZE,0000,0000,0000,,Hãy nghe lệnh ta, thực hiện nguyện vọng của ta.
Dialogue: 0,0:08:11.75,0:08:13.12,Default - italics,HAKAZE,0000,0000,0000,,Hỡi đế vương chi mộc,
Dialogue: 0,0:08:13.12,0:08:15.22,Default - italics,HAKAZE,0000,0000,0000,,tồn tại vượt lên trên tất cả,
Dialogue: 0,0:08:15.22,0:08:17.93,Default - italics,HAKAZE,0000,0000,0000,,thần mộc tồn tại từ thời thượng cổ, Khởi nguyên chi mộc.
Dialogue: 0,0:08:17.93,0:08:20.80,Default - italics,HAKAZE,0000,0000,0000,,Hãy tìm ra những tội đồ lạc lối,
Dialogue: 0,0:08:20.80,0:08:23.13,Default - italics,HAKAZE,0000,0000,0000,,tìm ra kẻ khát máu.
Dialogue: 0,0:08:26.18,0:08:27.56,Default,MAHIRO,0000,0000,0000,,Triển khai ma thuật!
Dialogue: 0,0:08:34.29,0:08:36.88,Default,HAKAZE,0000,0000,0000,,Nếu sự việc diễn ra hơn 1 năm trước,
Dialogue: 0,0:08:36.88,0:08:40.86,Default,HAKAZE,0000,0000,0000,,thì sẽ mất một ít thời gian để thu thập thông tin thủ phạm đấy.
Dialogue: 0,0:08:41.71,0:08:44.58,Default,MAHIRO,0000,0000,0000,,Chờ thêm chút nữa cũng không vấn đề gì.
Dialogue: 0,0:08:44.58,0:08:47.07,Default,MAHIRO,0000,0000,0000,,Ta đã chờ đợi suốt một năm trời
Dialogue: 0,0:08:47.07,0:08:50.09,Default,MAHIRO,0000,0000,0000,,để có thể tận tay giết chết hung thủ sát hại Aika!
Dialogue: 0,0:08:52.17,0:08:53.20,Default - italics,YOSHINO,0000,0000,0000,,Đúng vậy...
Dialogue: 0,0:08:53.20,0:08:55.49,Default - italics,YOSHINO,0000,0000,0000,,Mahiro đã thỏa thuận với Hakaze-san.
Dialogue: 0,0:08:56.06,0:09:02.35,Default - italics,YOSHINO,0000,0000,0000,,Giúp cô ấy để đổi lại sự trợ giúp từ ma thuật, tìm ra kẻ sát hại Aika 1 năm trước.
Dialogue: 0,0:09:02.95,0:09:07.49,Default,YOSHINO,0000,0000,0000,,Chắc Aika-chan trên thiên đường cũng cảm kích về quyết tâm của cậu lúc này.
Dialogue: 0,0:09:07.49,0:09:08.90,Default,MAHIRO,0000,0000,0000,,Đừng ngốc thế.
Dialogue: 0,0:09:09.61,0:09:13.01,Default,MAHIRO,0000,0000,0000,,Người đã chết không thể cảm thấy hạnh phúc hay đau khổ.
Dialogue: 0,0:09:13.86,0:09:18.82,Default,,0000,0000,0000,,Tớ chỉ không thể chấp nhận việc hung thủ sát hại Aika vẫn còn đang nhởn nhơ ngoài kia mà chưa phải trả giá.
Dialogue: 0,0:09:19.65,0:09:22.74,Default,MAHIRO,0000,0000,0000,,Đó là lí do tớ lợi dụng sức mạnh ma thuật.
Dialogue: 0,0:09:23.91,0:09:28.20,Default,MAHIRO,0000,0000,0000,,Đó là lí do tớ giúp Hakaze cứu lấy thế giới.
Dialogue: 0,0:09:29.68,0:09:32.80,Default,YOSHINO,0000,0000,0000,,Hakaze-san, có chắc là tin được tên này không thế?
Dialogue: 0,0:09:32.80,0:09:35.75,Default,HAKAZE,0000,0000,0000,,Mục đích của bọn tôi giống nhau nên cậu ta sẽ không phản bội tôi.
Dialogue: 0,0:09:36.23,0:09:39.01,Default,HAKAZE,0000,0000,0000,,Tình yêu của cậu ta giành cho cô em gái cũng là một điểm lợi.
Dialogue: 0,0:09:39.01,0:09:41.91,Default - italics,YOSHINO,0000,0000,0000,,Tính cách của bà cô này cũng có vấn đề rồi.
Dialogue: 0,0:09:42.35,0:09:43.16,Default,MAHIRO,0000,0000,0000,,Yoshino...
Dialogue: 0,0:09:43.81,0:09:45.93,Default,MAHIRO,0000,0000,0000,,Thành phố này sẽ sớm bị phong tỏa.
Dialogue: 0,0:09:45.93,0:09:46.94,Default,MAHIRO,0000,0000,0000,,Cậu nên rời khỏi đây sớm thì hơn.
Dialogue: 0,0:09:46.94,0:09:47.61,Default,YOSHINO,0000,0000,0000,,Hả?
Dialogue: 0,0:09:48.20,0:09:50.72,Default,YOSHINO,0000,0000,0000,,Cậu không cần tớ giúp à?
Dialogue: 0,0:09:50.72,0:09:53.08,Default,MAHIRO,0000,0000,0000,,Không phải bố mẹ đang lo lắng cho cậu sao?
Dialogue: 0,0:09:53.08,0:09:53.90,Default,MAHIRO,0000,0000,0000,,Hơn nữa...
Dialogue: 0,0:09:54.32,0:09:58.28,Default,MAHIRO,0000,0000,0000,,Những lúc như thế này thì cậu nên ở bên cạnh bạn gái của mình chứ.
Dialogue: 0,0:09:59.70,0:10:02.29,Default,MAHIRO,0000,0000,0000,,Cậu chưa bao giờ có quan hệ tốt với Aika mà.
Dialogue: 0,0:10:02.76,0:10:05.22,Default,MAHIRO,0000,0000,0000,,Chẳng có lí do gì phải chạy theo tớ cả.
Dialogue: 0,0:10:05.22,0:10:07.21,Default,YOSHIRO,0000,0000,0000,,Phải...rồi nhỉ...
Dialogue: 0,0:10:07.90,0:10:09.21,Default,MAHIRO,0000,0000,0000,,Đúng rồi.
Dialogue: 0,0:10:12.29,0:10:14.19,Default,MAHIRO,0000,0000,0000,,Cầm lấy này... Phù bảo đấy.
Dialogue: 0,0:10:15.13,0:10:17.77,Default,MAHIRO,0000,0000,0000,,Có mấy thứ này, cậu sẽ không bị nhiễm Hắc Thiết Dịch.
Dialogue: 0,0:10:17.77,0:10:19.89,Default,MAHIRO,0000,0000,0000,,Hakaze cũng đã cho bỏ phong ấn rồi.
Dialogue: 0,0:10:19.89,0:10:22.05,Default,MAHIRO,0000,0000,0000,,Cậu có thể sử dụng nó để phòng thủ hay di chuyển tốc độ cao.
Dialogue: 0,0:10:23.07,0:10:26.29,Default,MAHIRO,0000,0000,0000,,Chỉ cần tưởng tượng ra năng lực mình muốn là ma thuật sẽ tự khởi động.
Dialogue: 0,0:10:27.04,0:10:30.50,Default,MAHIRO,0000,0000,0000,,À còn nữa, nếu thấy nơi nào đột nhiên xuất hiện nhiều bướm thì nhớ tránh xa.
Dialogue: 0,0:10:31.16,0:10:34.49,Default,MAHIRO,0000,0000,0000,,Đó là dấu hiệu trái cây sắp xuất hiện đấy.
Dialogue: 0,0:10:34.94,0:10:39.28,Default,MAHIRO,0000,0000,0000,,Ấu trùng cùng kén sẽ phản ứng với mùi của trái cây và phát triển rất nhanh.
Dialogue: 0,0:10:40.91,0:10:41.90,Default,MAHIRO,0000,0000,0000,,Vậy nhé!
Dialogue: 0,0:10:42.66,0:10:45.70,Default,MAHIRO,0000,0000,0000,,Tớ sẽ trở lại sau khi trừng trị hung thủ đã giết Aika.
Dialogue: 0,0:10:46.37,0:10:48.71,Default,MAHIRO,0000,0000,0000,,Lúc đó nhớ giới thiệu cho tớ bạn gái cậu.
Dialogue: 0,0:10:49.52,0:10:50.71,Default,YOSHINO,0000,0000,0000,,Đúng rồi.
Dialogue: 0,0:10:51.79,0:10:53.05,Default,YOSHINO,0000,0000,0000,,Tới lúc đó,
Dialogue: 0,0:10:53.63,0:10:55.57,Default,YOSHINO,0000,0000,0000,,tớ sẽ giới thiệu cho cậu.
Dialogue: 0,0:11:01.23,0:11:04.19,Default - italics,YOSHINO,0000,0000,0000,,"Đổi lại sẽ cứu lấy thế giới" hả?
Dialogue: 0,0:11:05.01,0:11:08.02,Default - italics,YOSHINO,0000,0000,0000,,Mahiro chưa bao giờ quan tâm tới hòa bình thế giới.
Dialogue: 0,0:11:08.23,0:11:10.98,Default - italics,YOSHINO,0000,0000,0000,,Nếu là để tìm ra hung thủ sát hại Aika-chan,
Dialogue: 0,0:11:10.98,0:11:13.08,Default - italics,YOSHINO,0000,0000,0000,,chắc chắn cậu ta sẽ không ngần ngại mà hủy diệt thế giới chỉ để đạt được điều đó.
Dialogue: 0,0:11:16.93,0:11:20.36,Default - italics,YOSHINO,0000,0000,0000,,Lời hứa của ngày mai sẽ không bao giờ được thực hiện.
Dialogue: 0,0:11:22.47,0:11:28.27,Default - italics,YOSHINO,0000,0000,0000,,Không biết trên thế giới đã có bao nhiêu lời hứa của ngày mai biến mất như thể chúng chưa bao giờ tồn tại.
Dialogue: 0,0:11:37.66,0:11:39.25,Default,HAKAZE,0000,0000,0000,,Takigawa Yoshino...
Dialogue: 0,0:11:39.88,0:11:42.43,Default,HAKAZE,0000,0000,0000,,Cậu tin tưởng tới mức giao cho hắn phù bảo sao?
Dialogue: 0,0:11:42.91,0:11:44.99,Default,MAHIRO,0000,0000,0000,,Tôi quen biết Yoshino lâu rồi.
Dialogue: 0,0:11:44.99,0:11:48.39,Default,HAKAZE,0000,0000,0000,,Tôi cũng đã quen biết Samon và những người khác lâu rồi.
Dialogue: 0,0:11:48.91,0:11:49.84,Default,HAKAZE,0000,0000,0000,,Nhưng giờ thì...
Dialogue: 0,0:11:49.84,0:11:53.02,Default,MAHIRO,0000,0000,0000,,Đừng có so sánh tôi với loại đàn bà nhỏ nhen như cô.
Dialogue: 0,0:11:53.02,0:11:55.27,Default,HAKAZE,0000,0000,0000,,"Nhỏ nhen" dùng để miêu tả cậu hợp hơn tôi nhiều đấy.
Dialogue: 0,0:11:55.27,0:11:56.45,Default,MAHIRO,0000,0000,0000,,Im đi.
Dialogue: 0,0:12:01.98,0:12:03.06,Default,MAHIRO,0000,0000,0000,,Ối chà chà...
Dialogue: 0,0:12:03.71,0:12:05.45,Default,MAHIRO,0000,0000,0000,,Xem ra sắp có kết quả rồi đây.
Dialogue: 0,0:12:06.75,0:12:09.94,Default,YOSHINO,0000,0000,0000,,Có nên mang theo một ít đồ hộp không nhỉ...
Dialogue: 0,0:12:10.41,0:12:12.22,Default,YOSHINO,0000,0000,0000,,Nhưng mà làm vậy thì lại tăng thêm hành lí.
Dialogue: 0,0:12:15.82,0:12:18.28,Default,EVANGELINE,0000,0000,0000,,Khu vực này sẽ bị cách li trong 30 phút nữa.
Dialogue: 0,0:12:18.98,0:12:19.84,Default,EVANGELINE,0000,0000,0000,,OK.
Dialogue: 0,0:12:20.21,0:12:23.15,Default,EVANGELINE,0000,0000,0000,,Tôi sẽ cố gắng bắt liên lạc với Fuwa Mahiro trong lúc đó.
Dialogue: 0,0:12:26.25,0:12:30.55,Default,PHONE,0000,0000,0000,,Thuê bao quý khách vừa gọi hiện đang nằm ngoài vùng phủ sóng...
Dialogue: 0,0:12:27.85,0:12:30.37,Sign2B,SIGN,0000,0000,0000,,{\frz22.027\pos(556,241)\bord0}Mẹ
Dialogue: 0,0:12:32.78,0:12:34.27,Default,HAKAZE,0000,0000,0000,,Sao rồi, Mahiro?
Dialogue: 0,0:12:34.89,0:12:36.11,Default - italics,MAHIRO,0000,0000,0000,,Chờ lâu quá rồi...
Dialogue: 0,0:12:36.82,0:12:38.08,Default - italics,MAHIRO,0000,0000,0000,,Cái thời khắc này...
Dialogue: 0,0:12:40.91,0:12:42.21,Default - italics,MAHIRO,0000,0000,0000,,Vài phút nữa thôi...
Dialogue: 0,0:12:44.22,0:12:46.99,Default - italics,MAHIRO,0000,0000,0000,,Mình sẽ có thể tìm ra...
Dialogue: 0,0:12:48.32,0:12:49.74,Default - italics,MAHIRO,0000,0000,0000,,manh mối của kẻ thù!
Dialogue: 0,0:12:57.94,0:13:01.22,Default - italics,YOSHINO,0000,0000,0000,,Đã lâu như vậy mà không có một chiếc xe cấp cứu nào tới.
Dialogue: 0,0:13:01.82,0:13:05.63,Default - italics,MAHIRO,0000,0000,0000,,Chính phủ đã cố tình giấu nhẹm thông tin,\Nnhưng họ cũng sắp hết cách rồi.
Dialogue: 0,0:13:05.63,0:13:08.39,Default - italics,MAHIRO,0000,0000,0000,,Họ sẽ nghĩ ra lí do để cách li nơi này sớm thôi.
Dialogue: 0,0:13:10.16,0:13:13.57,Default - italics,YOSHINO,0000,0000,0000,,Không lẽ chính phủ định bỏ mặc thành phố này sao?
Dialogue: 0,0:13:24.58,0:13:25.78,Default - italics,YOSHINO,0000,0000,0000,,Là chúng...
Dialogue: 0,0:13:33.32,0:13:34.80,Default,YOSHINO,0000,0000,0000,,Xin lỗi nhé.
Dialogue: 0,0:13:34.80,0:13:37.53,Default,YOSHINO,0000,0000,0000,,Tôi có cảm giác mình sẽ sớm cần thứ này,
Dialogue: 0,0:13:37.53,0:13:39.00,Default,YOSHINO,0000,0000,0000,,vậy nên tôi sẽ lấy lại.
Dialogue: 0,0:13:41.74,0:13:44.19,Default - italics,YOSHINO,0000,0000,0000,,"Đưa mọi thứ trở lại công bằng" hả?
Dialogue: 0,0:13:44.83,0:13:46.63,Default,EVANGELINE,0000,0000,0000,,Làm vậy không tốt đâu nhé.
Dialogue: 0,0:13:50.53,0:13:52.97,Default,EVANGELINE,0000,0000,0000,,Lấy trộm ví trên xác người khác...
Dialogue: 0,0:13:52.97,0:13:54.98,Default,EVANGELINE,0000,0000,0000,,Không hổ danh bạn của Fuwa Mahiro.
Dialogue: 0,0:13:56.33,0:13:59.69,Default,EVANGELINE,0000,0000,0000,,Nếu còn cố kháng cự, đừng trách tôi cho vài lỗ trên chân cậu đấy.
Dialogue: 0,0:14:00.33,0:14:03.61,Default,EVANGELINE,0000,0000,0000,,Giờ mau kể cho tôi tất cả những gì cậu biết về phù thủy.
Dialogue: 0,0:14:03.61,0:14:06.38,Default,EVANGELINE,0000,0000,0000,,Cậu có biết Kusaribe Hakaze hiện đang ở đâu?
Dialogue: 0,0:14:07.18,0:14:10.28,Default - italics,YOSHINO,0000,0000,0000,,Chạm vào phù bảo và tưởng tượng...
Dialogue: 0,0:14:11.22,0:14:14.41,Default - italics,YOSHINO,0000,0000,0000,,Phòng thủ và di chuyển tốc độ cao!
Dialogue: 0,0:14:47.55,0:14:50.23,Default,YOSHINO,0000,0000,0000,,Tạm thời an toàn rồi...
Dialogue: 0,0:14:52.76,0:14:53.91,Default - italics,YOSHINO,0000,0000,0000,,Cô bạn này...
Dialogue: 0,0:14:54.66,0:14:56.41,Default - italics,YOSHINO,0000,0000,0000,,Tên gì ấy nhỉ?
Dialogue: 0,0:14:57.22,0:15:00.42,Default - italics,YOSHINO,0000,0000,0000,,Ishikawa? Ishizawa?
Dialogue: 0,0:15:01.35,0:15:03.84,Default - italics,YOSHINO,0000,0000,0000,,Mà thôi có lẽ mình cũng không cần biết nữa rồi.
Dialogue: 0,0:15:06.27,0:15:07.83,Default - italics,YOSHINO,0000,0000,0000,,Không bao giờ nữa.
Dialogue: 0,0:15:18.25,0:15:19.52,Default,YOSHINO,0000,0000,0000,,Đùa hả?
Dialogue: 0,0:15:28.36,0:15:29.24,Default,EVANGELINE,0000,0000,0000,,Tìm thấy rồi!{Đĩ vãi}
Dialogue: 0,0:15:30.76,0:15:34.45,Default,HAKAZE,0000,0000,0000,,Không thể ngờ được thủ phạm lại có lai lịch như thế này.
Dialogue: 0,0:15:35.02,0:15:36.87,Default,HAKAZE,0000,0000,0000,,Đúng là không thể ngờ được...
Dialogue: 0,0:15:36.87,0:15:38.48,Default,MAHIRO,0000,0000,0000,,Đừng có hiểu lầm.
Dialogue: 0,0:15:38.48,0:15:40.33,Default,MAHIRO,0000,0000,0000,,Tôi không định đổ lỗi cho cô đâu.
Dialogue: 0,0:15:40.82,0:15:44.70,Default,MAHIRO,0000,0000,0000,,Trái lại tôi còn rất cần sự trợ giúp của cô để bắt thủ phạm.
Dialogue: 0,0:15:45.28,0:15:47.00,Default,HAKAZE,0000,0000,0000,,Sự việc xảy ra một năm trước sao?
Dialogue: 0,0:15:47.82,0:15:50.98,Default,HAKAZE,0000,0000,0000,,Vậy là còn trước khi tôi bị giam cầm ở đây!
Dialogue: 0,0:15:50.98,0:15:52.47,Default,HAKAZE,0000,0000,0000,,Vậy mà tôi chẳng biết gì cả.
Dialogue: 0,0:15:53.00,0:15:55.65,Default,MAHIRO,0000,0000,0000,,Cô chỉ là một cô công chúa ngu xuẩn bị đóng thùng trôi dạt vào đảo hoang thôi mà,
Dialogue: 0,0:15:55.65,0:15:56.39,Default,,0000,0000,0000,,biết làm sao được.
Dialogue: 0,0:15:56.39,0:15:59.46,Default,HAKAZE,0000,0000,0000,,Cậu chính là người gặp rắc rối nếu không có sự trợ giúp từ cô công chúa ngu xuẩn này đấy!
Dialogue: 0,0:15:59.46,0:16:02.82,Default,MAHIRO,0000,0000,0000,,Cô mới là người gặp rắc rối nếu không có tôi chứ?
Dialogue: 0,0:16:04.98,0:16:06.15,Default,MAHIRO,0000,0000,0000,,Gã này?
Dialogue: 0,0:16:10.68,0:16:12.86,Default,MAHIRO,0000,0000,0000,,Có vẻ như tôi đụng độ bọn chúng còn sớm hơn dự kiến.
Dialogue: 0,0:16:14.38,0:16:15.32,Default,HAKAZE,0000,0000,0000,,Sao thế?
Dialogue: 0,0:16:15.98,0:16:18.62,Default,MAHIRO,0000,0000,0000,,Một tên phù thủy hàng thật giá thật.
Dialogue: 0,0:16:19.60,0:16:20.90,Default,HAKAZE,0000,0000,0000,,Chó săn của Samon?
Dialogue: 0,0:16:28.64,0:16:29.46,Default,NATSUMURA,0000,0000,0000,,Cậu bé.
Dialogue: 0,0:16:30.07,0:16:31.61,Default,NATSUMURA,0000,0000,0000,,Tại sao cậu lại ở đây?
Dialogue: 0,0:16:32.12,0:16:33.73,Default,MAHIRO,0000,0000,0000,,Thế còn ngươi?
Dialogue: 0,0:16:33.73,0:16:35.97,Default,MAHIRO,0000,0000,0000,,Đi kiểm tra theo lệnh Samon à?
Dialogue: 0,0:16:36.67,0:16:38.12,Default,NATSUMURA,0000,0000,0000,,Ra vậy.
Dialogue: 0,0:16:38.44,0:16:40.05,Default,NATSUMURA,0000,0000,0000,,Đó có thể coi là câu trả lời rồi.
Dialogue: 0,0:16:47.37,0:16:49.57,Default,NATSUMURA,0000,0000,0000,,Cậu học loại ma thuật đó ở đâu?
Dialogue: 0,0:16:51.14,0:16:52.70,Default,MAHIRO,0000,0000,0000,,Trong một cái thùng.
Dialogue: 0,0:16:53.25,0:16:54.43,Default,NATSUMURA,0000,0000,0000,,Ra vậy.
Dialogue: 0,0:16:55.63,0:16:58.95,Default,NATSUMURA,0000,0000,0000,,Chắc là có nhiều hạn chế và khó khăn lắm nhỉ.
Dialogue: 0,0:17:02.90,0:17:05.29,Default,MAHIRO,0000,0000,0000,,Sẵn sàng rồi hả?
Dialogue: 0,0:17:05.29,0:17:07.10,Default,MAHIRO,0000,0000,0000,,Gã cầm thương kia.
Dialogue: 0,0:17:07.10,0:17:08.06,Default,HAKAZE,0000,0000,0000,,Thương?
Dialogue: 0,0:17:08.63,0:17:11.13,Default,HAKAZE,0000,0000,0000,,Mahiro, đừng có đánh nhau với hắn!
Dialogue: 0,0:17:11.13,0:17:14.02,Default,HAKAZE,0000,0000,0000,,Gã đó có thể là Kusaribe Natsumura.
Dialogue: 0,0:17:14.47,0:17:15.61,Default,HAKAZE,0000,0000,0000,,Hắn rất mạnh...
Dialogue: 0,0:17:15.61,0:17:16.88,Default,HAKAZE,0000,0000,0000,,Một đối thủ rất mạnh đấy!
Dialogue: 0,0:17:17.76,0:17:19.50,Default,MAHIRO,0000,0000,0000,,Nếu vậy thì...
Dialogue: 0,0:17:19.50,0:17:21.93,Default,MAHIRO,0000,0000,0000,,Tôi sẽ đánh bại hắn ngay tại đây!
Dialogue: 0,0:17:24.50,0:17:26.36,Default,EVANGELINE,0000,0000,0000,,Yoshino-kun!
Dialogue: 0,0:17:26.88,0:17:29.44,Default,EVANGELINE,0000,0000,0000,,Takigawa Yoshino-kun!
Dialogue: 0,0:17:31.45,0:17:33.40,Default,EVANGELINE,0000,0000,0000,,Không thể để cậu coi thường được nhỉ?
Dialogue: 0,0:17:34.66,0:17:38.88,Default,EVANGELINE,0000,0000,0000,,Máy bay bà già {LOL}\Ncó nhiều đồ chơi làm bạn lắm.
Dialogue: 0,0:17:38.88,0:17:40.20,Default,EVANGELINE,0000,0000,0000,,Thấy không?
Dialogue: 0,0:17:55.94,0:17:56.96,Default,EVANGELINE,0000,0000,0000,,Nào!
Dialogue: 0,0:17:56.96,0:17:59.02,Default,EVANGELINE,0000,0000,0000,,Cậu đang trốn ở đâu rồi?
Dialogue: 0,0:17:59.68,0:18:04.01,Default,EVANGELINE,0000,0000,0000,,Khói đang trở nên dày đặc hơn rồi đấy.
Dialogue: 0,0:18:11.81,0:18:12.76,Default,EVANGELINE,0000,0000,0000,,Lạnh quá!
Dialogue: 0,0:18:13.48,0:18:16.47,Default,EVANGELINE,0000,0000,0000,,Lẽ ra phải mặc thêm quần bó 80 phân mới phải...
Dialogue: 0,0:18:22.34,0:18:24.16,Default,EVANGELINE,0000,0000,0000,,Ái chà, từ lúc nào vậy?
Dialogue: 0,0:18:26.72,0:18:28.29,Default,EVANGELINE,0000,0000,0000,,Cậu trả tôi thứ đó được không?
Dialogue: 0,0:18:28.63,0:18:30.75,Default,EVANGELINE,0000,0000,0000,,Đó không phải thứ trẻ con nên chơi đâu.
Dialogue: 0,0:18:31.06,0:18:33.73,Default,EVANGELINE,0000,0000,0000,,Không cẩn thận là có người mất mạng đấy.
Dialogue: 0,0:18:36.12,0:18:37.25,Default,YOSHINO,0000,0000,0000,,Cô...
Dialogue: 0,0:18:38.13,0:18:40.73,Default,YOSHINO,0000,0000,0000,,đã thấy những gì khi tới đây?
Dialogue: 0,0:18:40.73,0:18:41.45,Default,EVANGELINE,0000,0000,0000,,Hả?
Dialogue: 0,0:18:43.14,0:18:45.42,Default,YOSHINO,0000,0000,0000,,Bướm đuôi nhạn bay khắp nơi.
Dialogue: 0,0:18:45.42,0:18:47.88,Default,YOSHINO,0000,0000,0000,,Tất cả những sinh vật khác bị thiết hóa.
Dialogue: 0,0:18:47.88,0:18:50.48,Default,YOSHINO,0000,0000,0000,,Và một trái cây kì quái lơ lửng trên trời.
Dialogue: 0,0:18:50.48,0:18:57.03,Default,YOSHINO,0000,0000,0000,,Còn chuyện điên rồ gì chưa xảy ra trong cái thời đại đang trở nên hỗn loạn này đây?
Dialogue: 0,0:18:58.17,0:19:00.00,Default,EVANGELINE,0000,0000,0000,,Thời đại trở nên hỗn loạn?
Dialogue: 0,0:19:00.00,0:19:01.20,Default,EVANGELINE,0000,0000,0000,,Hamlet à?
Dialogue: 0,0:19:02.04,0:19:03.74,Default,EVANGELINE,0000,0000,0000,,Có kiến thức ra phết nhỉ.
Dialogue: 0,0:19:08.69,0:19:10.12,Default - italics,EVANGELINE,0000,0000,0000,,Cậu ta sẽ bắn...
Dialogue: 0,0:19:10.65,0:19:11.50,Default - italics,EVANGELINE,0000,0000,0000,,Rất bình tĩnh...
Dialogue: 0,0:19:11.50,0:19:12.96,Default - italics,EVANGELINE,0000,0000,0000,,không ngần ngại...
Dialogue: 0,0:19:13.70,0:19:15.23,Default - italics,EVANGELINE,0000,0000,0000,,Không phải trẻ con bình thường.
Dialogue: 0,0:19:36.24,0:19:38.17,Default,YOSHINO,0000,0000,0000,,Phòng ngự và di chuyển tốc độ cao hả?
Dialogue: 0,0:19:38.17,0:19:40.73,Default,YOSHINO,0000,0000,0000,,Có lẽ đây là giới hạn rồi.
Dialogue: 0,0:19:43.29,0:19:44.73,Default,YOSHINO,0000,0000,0000,,Chúng ta giao dịch nhé.
Dialogue: 0,0:19:46.33,0:19:47.70,Default,EVANGELINE,0000,0000,0000,,Giao dịch?
Dialogue: 0,0:19:50.06,0:19:50.91,Default,YOSHINO,0000,0000,0000,,Đúng là tôi
Dialogue: 0,0:19:51.88,0:19:54.92,Default,YOSHINO,0000,0000,0000,,vẫn không thể bỏ Mahiro lại một mình được.
Dialogue: 0,0:20:02.33,0:20:03.78,Default,NATSUMURA,0000,0000,0000,,Samon-dono!
Dialogue: 0,0:20:03.78,0:20:07.56,Default,NATSUMURA,0000,0000,0000,,Tôi vừa gặp một cậu bé không bị thiết hóa trong khu vực trái cây xuất hiện.
Dialogue: 0,0:20:08.31,0:20:10.67,Default,NATSUMURA,0000,0000,0000,,Cậu ta sử dụng ma thuật nhà Kusaribe.
Dialogue: 0,0:20:11.51,0:20:16.76,Default,SAMON,0000,0000,0000,,Vậy là công chúa đã thực sự từ hoang đảo với tay được tới đây.
Dialogue: 0,0:20:18.13,0:20:21.24,Default,SAMON,0000,0000,0000,,Đây có lẽ là sự khác biệt của kẻ sinh ra đã nắm trong tay sức mạnh.
Dialogue: 0,0:20:21.90,0:20:23.24,Default,NATSUMURA,0000,0000,0000,,Giờ chúng ta làm gì?
Dialogue: 0,0:20:24.90,0:20:25.75,Default,SAMON,0000,0000,0000,,Bắt lấy nó.
Dialogue: 0,0:20:26.27,0:20:27.98,Default,SAMON,0000,0000,0000,,Chắc cậu hiểu phải làm gì rồi.
Dialogue: 0,0:20:28.62,0:20:29.87,Default,SAMON,0000,0000,0000,,Nhưng đừng có giết.
Dialogue: 0,0:20:31.45,0:20:33.72,Default,EVANGELINE,0000,0000,0000,,Hiện giờ tôi tạm thời chấp nhận giao dịch,
Dialogue: 0,0:20:33.72,0:20:36.43,Default,EVANGELINE,0000,0000,0000,,nhưng cậu vẫn nên mau chóng tránh xa khỏi vụ này.
Dialogue: 0,0:20:37.26,0:20:38.99,Default,EVANGELINE,0000,0000,0000,,Cho dù cậu ta có là bạn cậu,
Dialogue: 0,0:20:38.99,0:20:43.99,Default,EVENGELINE,0000,0000,0000,,cậu chẳng có đủ mạng để chạy theo cái kẻ điên cuồng vì trả thù cho em gái đó đâu.
Dialogue: 0,0:20:44.68,0:20:45.79,Default,YOSHINO,0000,0000,0000,,Có lẽ vậy.
Dialogue: 0,0:20:46.54,0:20:48.20,Default,YOSHINO,0000,0000,0000,,Cả bạn gái tôi cũng đã từng nói rằng
Dialogue: 0,0:20:48.20,0:20:52.25,Default,YOSHINO,0000,0000,0000,,chẳng có gì tốt khi quen biết với Mahiro.
Dialogue: 0,0:20:52.25,0:20:55.07,Default,EVANGELINE,0000,0000,0000,,Đã từng? Lại thì quá khứ à?
Dialogue: 0,0:20:57.12,0:20:58.15,Default,YOSHINO,0000,0000,0000,,Không.
Dialogue: 0,0:20:58.54,0:21:00.52,Default,,0000,0000,0000,,Chẳng có liên quan gì tới Hắc Thiết Dịch cả.
Dialogue: 0,0:21:01.06,0:21:04.07,Default,YOSHINO,0000,0000,0000,,Một năm trước tôi đột nhiên không còn được nhìn thấy cô ấy nữa.
Dialogue: 0,0:21:06.29,0:21:07.92,Default - italics,EVANGELINE,0000,0000,0000,,Một năm trước?
Dialogue: 0,0:21:08.44,0:21:10.46,Default - italics,EVANGELINE,0000,0000,0000,,Đó là thời điểm em gái của Fuwa Mahiro...
Dialogue: 0,0:21:15.59,0:21:19.36,Default,YOSHINO,0000,0000,0000,,"Dù cho bốn mươi ngàn người anh em...
Dialogue: 0,0:21:19.36,0:21:22.27,Default,YOSHINO,0000,0000,0000,,...gộp chung tình yêu của họ lại,
Dialogue: 0,0:21:23.19,0:21:26.79,Default,YOSHINO,0000,0000,0000,,cũng không thể sánh nổi tình yêu ta giành cho nàng."
Dialogue: 0,0:21:30.11,0:21:34.48,Default,MAHIRO,0000,0000,0000,,"Cơn phẫn nộ bừng bừng rực cháy, thiêu rụi lí trí của ta!"
Dialogue: 0,0:21:35.76,0:21:40.73,Default,MAHIRO,0000,0000,0000,,"Cơn khát khao báo thù trong ta cần phải được thỏa mãn...
Dialogue: 0,0:21:44.80,0:21:47.91,Default,MAHIRO,0000,0000,0000,,cho dù ta có trở nên lạnh lùng tàn nhẫn tới thế nào!"
Dialogue: 0,0:21:49.42,0:21:50.80,Default,EVANGELINE,0000,0000,0000,,Đợi đã!
Dialogue: 0,0:21:50.80,0:21:53.57,Default,EVANGELINE,0000,0000,0000,,Không lẽ cậu cũng định đi báo thù cho Aika?
Dialogue: 0,0:21:54.13,0:21:56.37,Default,YOSHINO,0000,0000,0000,,Tôi không giống Mahiro.
Dialogue: 0,0:21:57.62,0:21:59.16,Default,YOSHINO,0000,0000,0000,,Cho dù có trả thù được,
Dialogue: 0,0:21:59.16,0:22:01.01,Default,YOSHINO,0000,0000,0000,,cho dù kẻ sát nhân có phải trả giá,
Dialogue: 0,0:22:01.01,0:22:03.06,Default,YOSHINO,0000,0000,0000,,những gì phi lí vẫn cứ phi lí thôi.
Dialogue: 0,0:22:03.55,0:22:05.07,Default,YOSHINO,0000,0000,0000,,Chẳng có gì thay đổi cả.
Dialogue: 0,0:22:05.07,0:22:07.13,Default,,0000,0000,0000,,Không có gì có thể quay trở lại.
Dialogue: 0,0:22:08.55,0:22:13.19,Default,YOSHINO,0000,0000,0000,,Rốt cuộc tôi có thể làm được gì cho một người bạn gái đã chết?
Dialogue: 0,0:22:18.41,0:22:24.59,Default,YOSHINO,0000,0000,0000,,Có thể tôi sẽ tìm được câu trả lời trong cái thời đại hỗn loạn này cũng nên.
Dialogue: 0,0:24:02.19,0:24:03.69,Default,YOSHINO,0000,0000,0000,,Khởi nguyên chi mộc?
Dialogue: 0,0:24:03.69,0:24:06.86,Default,HAKAZE,0000,0000,0000,,Một thần mộc cai quản mọi pháp tắc.
Dialogue: 0,0:24:07.48,0:24:09.55,Default,YOSHINO,0000,0000,0000,,Một ma thuật cần nền văn minh?
Dialogue: 0,0:24:10.29,0:24:12.01,Default,MAHIRO,0000,0000,0000,,Tất cả chỉ là một dạng của định mệnh.
Dialogue: 0,0:24:12.99,0:24:15.18,Default,NATSUMURA,0000,0000,0000,,Cậu chỉ có vậy thôi sao?
Dialogue: 0,0:24:15.18,0:24:18.60,Default,MAHIRO,0000,0000,0000,,Ta không thể chết dễ dàng như vậy...
Dialogue: 0,0:24:18.60,0:24:21.67,Default,HAKAZE,0000,0000,0000,,Cậu tin vào nguyên nhân bên trong sao?
Dialogue: 0,0:24:21.67,0:24:23.81,Default,YOSHINO,0000,0000,0000,,Phép màu tự bản thân nó đã là một sự phi lí rồi.
Dialogue: 0,0:24:23.81,0:25:00.00,Title2E1,SIGN,0000,0000,0000,,Tập 3 \NCó những điều mà cả ma thuật cũng không thể làm được
