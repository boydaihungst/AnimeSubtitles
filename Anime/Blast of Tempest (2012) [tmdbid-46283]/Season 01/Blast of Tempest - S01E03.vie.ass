Dialogue: 0,0:01:38.53,0:01:41.53,Title,SIGN,0000,0000,0000,,Tập 3 \NCó những điều mà cả ma thuật cũng không thể làm được
Dialogue: 0,0:01:43.47,0:01:44.85,Default - italics,NATSU,0000,0000,0000,,Sức mạnh này...
Dialogue: 0,0:01:45.23,0:01:46.80,Default - italics,NATSU,0000,0000,0000,,Quả nhiên là do công chúa.
Dialogue: 0,0:01:56.94,0:01:58.69,Default,NATSU,0000,0000,0000,,Ngươi vẫn còn non lắm!
Dialogue: 0,0:02:17.86,0:02:19.17,Default,MAHIRO,0000,0000,0000,,Quái gì đây, Hakaze?!
Dialogue: 0,0:02:19.17,0:02:20.48,Default,MAHIRO,0000,0000,0000,,Hắn ta mạnh quá!
Dialogue: 0,0:02:20.48,0:02:22.12,Default,HAKAZE,0000,0000,0000,,Đã bảo rồi mà!
Dialogue: 0,0:02:22.68,0:02:25.40,Default,HAKAZE,0000,0000,0000,,Hắn ta là phù thủy thứ thiệt đấy.
Dialogue: 0,0:02:25.40,0:02:29.03,Default,HAKAZE,0000,0000,0000,,So với cái loại chỉ có thể sử dụng ma thuật một cách hạn chế thông qua phù bảo như các cậu thì khác hoàn toàn.
Dialogue: 0,0:02:29.28,0:02:33.01,Default,HAKAZE,0000,0000,0000,,Mà ngay từ đầu việc đánh nhau với người Kusaribe trong thành phố đã ngu ngốc lắm rồi.
Dialogue: 0,0:02:33.01,0:02:34.00,Default,MAHIRO,0000,0000,0000,,Im đê.
Dialogue: 0,0:02:34.00,0:02:35.18,Default,MAHIRO,0000,0000,0000,,Tóm lại từ giờ...
Dialogue: 0,0:02:36.42,0:02:37.74,Default,MAHIRO,0000,0000,0000,,Lại hết nữa rồi.
Dialogue: 0,0:02:39.56,0:02:41.47,Default,MAHIRO,0000,0000,0000,,Giờ phải làm sao đây?
Dialogue: 0,0:02:41.47,0:02:43.08,Default,MAHIRO,0000,0000,0000,,Tôi bắt đầu thấy đói rồi.
Dialogue: 0,0:02:44.81,0:02:46.34,Default,MAHIRO,0000,0000,0000,,Ồ, may quá...
Dialogue: 0,0:02:46.34,0:02:47.06,Default,MAHIRO,0000,0000,0000,,Ơ...
Dialogue: 0,0:02:47.57,0:02:48.66,Default,MAHIRO,0000,0000,0000,,Yoshino?
Dialogue: 0,0:02:49.80,0:02:52.13,Default,MAHIRO,0000,0000,0000,,Cậu? Điên rồi à?
Dialogue: 0,0:02:52.13,0:02:54.89,Default,MAHIRO,0000,0000,0000,,Đã bảo là không cần phải đi theo tớ rồi mà!
Dialogue: 0,0:02:54.89,0:02:56.23,Default,YOSHINO,0000,0000,0000,,Là thế này...
Dialogue: 0,0:02:56.63,0:02:59.78,Default,YOSHINO,0000,0000,0000,,Bạn gái tớ rất ghét những kẻ bỏ mặc bạn mình lúc khó khăn.
Dialogue: 0,0:02:59.78,0:03:01.24,Default,YOSHINO,0000,0000,0000,,Giờ mà tớ làm vậy cô ấy sẽ giận lắm.{Hình như nó bảo thằng này chạy trước thì phải}
Dialogue: 0,0:03:01.60,0:03:03.26,Default,MAHIRO,0000,0000,0000,,Thảm quá đấy.
Dialogue: 0,0:03:03.26,0:03:05.90,Default,MAHIRO,0000,0000,0000,,Quan tâm làm khỉ gì mấy lời đàn bà nói.
Dialogue: 0,0:03:05.90,0:03:08.35,Default,YOSHINO,0000,0000,0000,,Nên quan tâm đấy.
Dialogue: 0,0:03:18.21,0:03:19.26,Default,MAHIRO,0000,0000,0000,,Hắn tới rồi.
Dialogue: 0,0:03:19.69,0:03:21.14,Default,YOSHINO,0000,0000,0000,,Hắn?
Dialogue: 0,0:03:28.48,0:03:29.25,Default,YOSHINO,0000,0000,0000,,Xin lỗi.
Dialogue: 0,0:03:29.25,0:03:30.47,Default,MAHIRO,0000,0000,0000,,Được rồi, cứ chạy đi!
Dialogue: 0,0:03:30.47,0:03:30.98,Default,YOSHINO,0000,0000,0000,,Hả?
Dialogue: 0,0:03:30.98,0:03:31.81,Default,NATSU,0000,0000,0000,,Ta tới đây.
Dialogue: 0,0:03:42.61,0:03:44.28,Default,NATSU,0000,0000,0000,,Đồng bọn à?
Dialogue: 0,0:03:45.97,0:03:48.26,Default,MAHIRO,0000,0000,0000,,Thấy chưa? Đã bảo không sao rồi.
Dialogue: 0,0:03:48.26,0:03:51.03,Default,YOSHINO,0000,0000,0000,,Lệch một chút là tiêu tùng cùng chiếc xe rồi đấy.
Dialogue: 0,0:03:51.03,0:03:53.29,Default,MAHIRO,0000,0000,0000,,Thì thế mới bảo cứ chạy đi.
Dialogue: 0,0:03:56.57,0:03:58.36,Default,HAKAZE,0000,0000,0000,,Mahiro, rút lui ngay.
Dialogue: 0,0:03:58.36,0:04:00.62,Default,HAKAZE,0000,0000,0000,,Đánh nhau với Natsumura lúc này chẳng được cái gì hết!
Dialogue: 0,0:04:00.62,0:04:01.90,Default,MAHIRO,0000,0000,0000,,Câm miệng lại.{Câm mịa mồm lại}
Dialogue: 0,0:04:01.90,0:04:04.86,Default,MAHIRO,0000,0000,0000,,Nếu bây giờ mà cứ bỏ chạy như vậy,
Dialogue: 0,0:04:04.86,0:04:07.43,Default,MAHIRO,0000,0000,0000,,thì làm sao có thể tiêu diệt hung thủ giết Aika.
Dialogue: 0,0:04:08.28,0:04:09.77,Default,HAKAZE,0000,0000,0000,,Sao cậu không chịu hiểu?
Dialogue: 0,0:04:10.46,0:04:13.03,Default - italics,HAKAZE,0000,0000,0000,,Tới gần hơn với hung thủ giết em gái
Dialogue: 0,0:04:13.03,0:04:14.94,Default - italics,HAKAZE,0000,0000,0000,,khiến cậu ta còn hung bạo hơn mình nghĩ.
Dialogue: 0,0:04:15.51,0:04:18.71,Default - italics,HAKAZE,0000,0000,0000,,Nhưng cứ thế này thì Mahiro sẽ không thể thắng được.
Dialogue: 0,0:04:19.26,0:04:20.41,Default,YOSHINO,0000,0000,0000,,Này, Mahiro...
Dialogue: 0,0:04:20.41,0:04:22.96,Default,,0000,0000,0000,,Tớ nghĩ chúng ta nên theo lời Hakaze-san.
Dialogue: 0,0:04:22.96,0:04:25.35,Default,YOSHINO,0000,0000,0000,,Cô ấy chẳng phải thiên hạ đệ nhất phù thủy sao?
Dialogue: 0,0:04:25.35,0:04:27.14,Default,MAHIRO,0000,0000,0000,,Toàn tự phong thôi, tự phong ấy mà.
Dialogue: 0,0:04:27.14,0:04:27.95,Default,YOSHINO,0000,0000,0000,,Với cả...
Dialogue: 0,0:04:28.52,0:04:30.04,Default,YOSHINO,0000,0000,0000,,liệu chúng ta có thể đánh với hắn
Dialogue: 0,0:04:30.04,0:04:34.02,Default,YOSHINO,0000,0000,0000,,chỉ với ma thuật phòng thủ và di chuyển tốc độ cao?
Dialogue: 0,0:04:34.76,0:04:37.43,Default,MAHIRO,0000,0000,0000,,Có cách sử dụng khác đấy.
Dialogue: 0,0:04:50.12,0:04:51.46,Default,YOSHINO,0000,0000,0000,,Tuyệt quá...
Dialogue: 0,0:04:51.46,0:04:53.15,Default,MAHIRO,0000,0000,0000,,Khỏi cần bác sĩ luôn.
Dialogue: 0,0:04:55.68,0:04:58.84,Default,YOSHINO,0000,0000,0000,,Vậy sử dụng lôi điện hay hỏa cầu thì sao?
Dialogue: 0,0:04:58.84,0:05:00.52,Default,YOSHINO,0000,0000,0000,,Cả triệu hồi quái vật nữa?
Dialogue: 0,0:05:00.52,0:05:01.42,Default,MAHIRO,0000,0000,0000,,Hả?
Dialogue: 0,0:05:01.42,0:05:04.28,Default,MAHIRO,0000,0000,0000,,Có phải trò chơi đâu...
Dialogue: 0,0:05:04.28,0:05:06.44,Default,MAHIRO,0000,0000,0000,,Sử dụng được mấy thứ đó thì nguy hiểm lắm.
Dialogue: 0,0:05:10.13,0:05:10.66,Default,MAHIRO,0000,0000,0000,,Được rồi...
Dialogue: 0,0:05:12.45,0:05:15.12,Default - italics,YOSHINO,0000,0000,0000,,Tớ nghĩ cậu hiện giờ cũng nguy hiểm lắm rồi.
Dialogue: 0,0:05:15.12,0:05:16.18,Default,MAHIRO,0000,0000,0000,,Yoshino!
Dialogue: 0,0:05:17.50,0:05:19.96,Default,MAHIRO,0000,0000,0000,,Hakaze, giảng cho cậu ta về ma thuật đi.
Dialogue: 0,0:05:22.09,0:05:23.64,Default,MAHIRO,0000,0000,0000,,3 phút.
Dialogue: 0,0:05:23.64,0:05:26.34,Default,MAHIRO,0000,0000,0000,,Cậu sẽ học cách sử dụng ma thuật trong thời gian đó.
Dialogue: 0,0:05:26.34,0:05:27.89,Default,YOSHINO,0000,0000,0000,,Đừng có nói như thể nó dễ lắm vậy.
Dialogue: 0,0:05:33.40,0:05:35.70,Default,MAHIRO,0000,0000,0000,,Ta tới đây, phù thủy!
Dialogue: 0,0:05:41.83,0:05:43.98,Default,HAKAZE,0000,0000,0000,,Yoshino, nói tôi biết chuyện gì đang xảy ra.
Dialogue: 0,0:05:43.98,0:05:44.86,Default,YOSHINO,0000,0000,0000,,Vâng...
Dialogue: 0,0:05:44.86,0:05:47.97,Default,YOSHINO,0000,0000,0000,,Mahiro vừa lao vào đánh nhau với gã cầm thương!
Dialogue: 0,0:05:47.97,0:05:50.07,Default,HAKAZE,0000,0000,0000,,Thiệt tình, cái tên này...
Dialogue: 0,0:05:50.36,0:05:51.89,Default,YOSHINO,0000,0000,0000,,Liệu có ổn không?
Dialogue: 0,0:05:51.89,0:05:54.75,Default,YOSHINO,0000,0000,0000,,Nếu tên đó mà sử dụng ma thuật tấn công...
Dialogue: 0,0:05:54.75,0:05:55.66,Default,HAKAZE,0000,0000,0000,,Yên tâm.
Dialogue: 0,0:05:56.19,0:05:59.96,Default,HAKAZE,0000,0000,0000,,Gia tộc Kusaribe không sở hữu cái thứ gọi là ma thuật tấn công.
Dialogue: 0,0:06:00.53,0:06:03.64,Default,HAKAZE,0000,0000,0000,,Ma thuật của chúng tôi dùng để bảo vệ những quy luật của thế giới.
Dialogue: 0,0:06:03.64,0:06:06.88,Default,HAKAZE,0000,0000,0000,,Cũng như sửa chữa, hồi phục và quản lí nó.
Dialogue: 0,0:06:07.26,0:06:10.14,Default,HAKAZE,0000,0000,0000,,Chúng tôi không có cái năng lực gây hại trực tiếp tới các quy luật đó.
Dialogue: 0,0:06:10.59,0:06:11.39,Default,YOSHINO,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:06:14.48,0:06:16.23,Default,MAHIRO,0000,0000,0000,,Sao thế, gã cầm thương?
Dialogue: 0,0:06:16.23,0:06:17.83,Default,YOSHINO,0000,0000,0000,,Năng lực của gã cầm thương đó là gì?
Dialogue: 0,0:06:17.83,0:06:20.37,Default,HAKAZE,0000,0000,0000,,Mũi thương của hắn được bao phủ bởi kết giới.
Dialogue: 0,0:06:20.37,0:06:22.66,Default,HAKAZE,0000,0000,0000,,Hắn sử dụng ma thuật để đâm thương với tốc độ cao.
Dialogue: 0,0:06:22.66,0:06:24.86,Default,HAKAZE,0000,0000,0000,,Làm vậy tự nhiên có thể gây ra sức phá hoại,
Dialogue: 0,0:06:24.86,0:06:27.99,Default,HAKAZE,0000,0000,0000,,nhưng bản thân ma thuật thì không có khả năng phá hoại nào cả.
Dialogue: 0,0:06:29.34,0:06:32.73,Default,YOSHINO,0000,0000,0000,,Vậy nghĩa là cũng giống như mặc áo giáp rồi tông người khác thật mạnh?
Dialogue: 0,0:06:32.73,0:06:34.33,Default,HAKAZE,0000,0000,0000,,Đại loại thế.
Dialogue: 0,0:06:34.75,0:06:36.13,Default,YOSHINO,0000,0000,0000,,Nhưng mà, Hakaze-san à...
Dialogue: 0,0:06:36.13,0:06:39.31,Default,YOSHINO,0000,0000,0000,,Họ đều có áo giáp... đều sử dụng ma thuật phòng ngự.
Dialogue: 0,0:06:39.31,0:06:41.24,Default,YOSHINO,0000,0000,0000,,Như vậy không lẽ chẳng ai chiếm được lợi thế?
Dialogue: 0,0:06:41.24,0:06:44.07,Default,HAKAZE,0000,0000,0000,,Họ không phải chịu nhiều thương tổn khi bị dính đòn.
Dialogue: 0,0:06:44.07,0:06:45.63,Default,HAKAZE,0000,0000,0000,,Nhưng mà một khi ma thuật phòng ngự khởi động,
Dialogue: 0,0:06:45.63,0:06:49.59,Default,HAKAZE,0000,0000,0000,,sẽ có giới hạn về thời gian và độ bền.
Dialogue: 0,0:06:49.59,0:06:53.27,Default,HAKAZE,0000,0000,0000,,Nếu chạm đến những giới hạn đó,
Dialogue: 0,0:06:53.27,0:06:55.10,Default,HAKAZE,0000,0000,0000,,lá chắn sẽ tự bị phá hủy.
Dialogue: 0,0:06:57.13,0:06:59.33,Default,YOSHINO,0000,0000,0000,,Và nếu một người bị tấn công ngay khi điều đó xảy ra?
Dialogue: 0,0:06:59.73,0:07:03.33,Default,HAKAZE,0000,0000,0000,,Nếu đối phương tấn công bằng kết giới,
Dialogue: 0,0:07:03.33,0:07:05.79,Default,HAKAZE,0000,0000,0000,,Thân thể con người chắc chắn sẽ không đỡ nổi.
Dialogue: 0,0:07:06.98,0:07:08.53,Default,YOSHINO,0000,0000,0000,,Tôi phải đi giúp Mahiro!
Dialogue: 0,0:07:10.77,0:07:12.03,Default,HAKAZE,0000,0000,0000,,Còn một điều quan trọng nữa!
Dialogue: 0,0:07:12.26,0:07:16.41,Default,HAKAZE,0000,0000,0000,,Ma thuật Kusaribe tồn tại nhờ vào sức mạnh lấy từ Khởi Nguyên Chi Mộc.
Dialogue: 0,0:07:16.41,0:07:17.60,Default,YOSHINO,0000,0000,0000,,Khởi Nguyên Chi Mộc?
Dialogue: 0,0:07:18.36,0:07:20.62,Default,HAKAZE,0000,0000,0000,,Đó là thần bảo hộ của gia tộc Kusaribe.
Dialogue: 0,0:07:20.62,0:07:25.25,Default,HAKAZE,0000,0000,0000,,Đế vương chi mộc, tồn tại từ thời thượng cổ, cai quản mọi pháp tắc.
Dialogue: 0,0:07:25.89,0:07:28.68,Default,HAKAZE,0000,0000,0000,,Khi lấy sức mạnh từ đó,
Dialogue: 0,0:07:28.68,0:07:31.20,Default,HAKAZE,0000,0000,0000,,chúng tôi sẽ có năng lực để bảo vệ các quy luật của thế giới.
Dialogue: 0,0:07:31.85,0:07:35.26,Default,HAKAZE,0000,0000,0000,,Để sử dụng sức mạnh này, có 2 điều kiện cần được đáp ứng.
Dialogue: 0,0:07:35.48,0:07:37.13,Default,HAKAZE,0000,0000,0000,,Thứ nhất là "lời nói".
Dialogue: 0,0:07:37.13,0:07:39.53,Default,HAKAZE,0000,0000,0000,,Với thanh âm của một thành viên trong gia tộc Kusaribe,
Dialogue: 0,0:07:39.53,0:07:42.73,Default,HAKAZE,0000,0000,0000,,chúng tôi có thể thỉnh cầu sức mạnh từ Khởi Nguyên Chi Mộc,
Dialogue: 0,0:07:42.73,0:07:44.40,Default,HAKAZE,0000,0000,0000,,và ma thuật sẽ được khởi động.
Dialogue: 0,0:07:44.74,0:07:46.86,Default,YOSHINO,0000,0000,0000,,Nhưng những phù bảo tôi có...
Dialogue: 0,0:07:46.86,0:07:49.31,Default,YOSHINO,0000,0000,0000,,Tôi chỉ phải tưởng tượng để sử dụng chúng.
Dialogue: 0,0:07:49.31,0:07:56.11,Default,HAKAZE,0000,0000,0000,,Đó là do tôi đã sử dụng "lời nói" sửa lại điều kiện để ma thuật có thể khởi động.
Dialogue: 0,0:07:56.54,0:07:58.70,Default,HAKAZE,0000,0000,0000,,Đây là kĩ năng cấp cao đấy.
Dialogue: 0,0:07:59.02,0:08:00.95,Default,YOSHINO,0000,0000,0000,,Vậy điều kiện thứ hai là?
Dialogue: 0,0:08:01.54,0:08:03.43,Default,HAKAZE,0000,0000,0000,,Đổi lại sức mạnh nhận được,
Dialogue: 0,0:08:03.43,0:08:06.20,Default,HAKAZE,0000,0000,0000,,chúng tôi phải dâng vật tế lên Khởi Nguyên Chi Mộc.
Dialogue: 0,0:08:06.62,0:08:08.30,Default,HAKAZE,0000,0000,0000,,Thứ mà Khởi Nguyên Chi Mộc muốn là
Dialogue: 0,0:08:08.30,0:08:09.96,Default,HAKAZE,0000,0000,0000,,thành quả của nền văn minh.
Dialogue: 0,0:08:10.43,0:08:12.56,Default,HAKAZE,0000,0000,0000,,Những thứ được tạo ra bởi tri thức của nhân loại...
Dialogue: 0,0:08:12.56,0:08:15.04,Default,HAKAZE,0000,0000,0000,,dụng cụ, máy móc, kiến trúc...
Dialogue: 0,0:08:15.04,0:08:17.49,Default,HAKAZE,0000,0000,0000,,Chỉ cần tiếp xúc trực tiếp với những thứ đó.
Dialogue: 0,0:08:17.49,0:08:19.97,Default,HAKAZE,0000,0000,0000,,Sau khi nghi thức tế thần được công nhận,
Dialogue: 0,0:08:19.97,0:08:21.98,Default,,0000,0000,0000,,vật tế sẽ tan thành tro bụi.
Dialogue: 0,0:08:36.11,0:08:38.41,Default,NATSU,0000,0000,0000,,Cậu di chuyển tốt hơn ban nãy đấy.
Dialogue: 0,0:08:38.41,0:08:40.20,Default,NATSU,0000,0000,0000,,Nhờ sự xuất hiện của đồng đội à?
Dialogue: 0,0:08:40.20,0:08:41.83,Default,MAHIRO,0000,0000,0000,,Đừng có đùa...
Dialogue: 0,0:08:41.83,0:08:44.21,Default,MAHIRO,0000,0000,0000,,Chỉ là giờ ta đánh nghiêm túc hơn tí thôi.
Dialogue: 0,0:08:44.21,0:08:46.14,Default,MAHIRO,0000,0000,0000,,Chỉ một chút thôi đấy...
Dialogue: 0,0:08:50.96,0:08:52.44,Default - italics,NATSU,0000,0000,0000,,Hỡi đế vương chi mộc,
Dialogue: 0,0:08:52.44,0:08:54.43,Default - italics,NATSU,0000,0000,0000,,tồn tại vượt lên trên tất cả,
Dialogue: 0,0:08:54.43,0:08:56.99,Default - italics,NATSU,0000,0000,0000,,Thần mộc tồn tại từ thời thượng cổ, Khởi nguyên chi mộc.
Dialogue: 0,0:08:56.99,0:08:59.64,Default - italics,NATSU,0000,0000,0000,,Hãy nghe lệnh ta, thực hiện nguyện vọng của ta.
Dialogue: 0,0:09:20.53,0:09:23.02,Default,HAKAZE,0000,0000,0000,,Với cả, kĩ thuật càng tân tiến,
Dialogue: 0,0:09:23.02,0:09:25.86,Default,,0000,0000,0000,,tri thức dùng để tạo ra vật tế càng tiến bộ,
Dialogue: 0,0:09:25.86,0:09:27.26,Default,,0000,0000,0000,,sức mạnh chúng tôi nhận được càng lớn.
Dialogue: 0,0:09:27.74,0:09:30.45,Default,HAKAZE,0000,0000,0000,,Nguyên nhân mà hiện giờ tôi chỉ có thể miễn cưỡng sử dụng ma thuật
Dialogue: 0,0:09:30.45,0:09:32.62,Default,HAKAZE,0000,0000,0000,,là do quanh đây chẳng có vật tế nào cả.
Dialogue: 0,0:09:32.62,0:09:35.67,Default,YOSHINO,0000,0000,0000,,Hòn đảo ấy chắc là biệt lập với khu vực con người sinh sống.
Dialogue: 0,0:09:41.28,0:09:43.21,Default - italics,YOSHINO,0000,0000,0000,,Nhưng mà có gì đó rất lạ.
Dialogue: 0,0:09:44.45,0:09:46.76,Default - italics,YOSHINO,0000,0000,0000,,Một ma thuật mà cần tới nền văn minh?
Dialogue: 0,0:09:55.71,0:09:57.05,Default - italics,YOSHINO,0000,0000,0000,,Hơn nữa...
Dialogue: 0,0:09:57.05,0:09:59.16,Default - italics,YOSHINO,0000,0000,0000,,sinh vật sống lại bị thiết hóa...
Dialogue: 0,0:09:59.84,0:10:01.58,Default - italics,YOSHINO,0000,0000,0000,,Điều này có ý nghĩa gì?
Dialogue: 0,0:10:18.75,0:10:20.48,Default,NATSU,0000,0000,0000,,Chịu im rồi à.
Dialogue: 0,0:10:31.86,0:10:33.63,Default,MAHIRO,0000,0000,0000,,Giờ thì ta hiểu rồi...
Dialogue: 0,0:10:34.44,0:10:36.94,Default,MAHIRO,0000,0000,0000,,Chỉ cần ma thuật phòng ngự còn khởi động,
Dialogue: 0,0:10:37.74,0:10:40.59,Default,MAHIRO,0000,0000,0000,,thì ta có thể gây thương tổn mà không cần vũ khí!
Dialogue: 0,0:10:46.14,0:10:47.66,Default,MAHIRO,0000,0000,0000,,Sao thế, sao thế?
Dialogue: 0,0:10:48.08,0:10:52.38,Default - italics,NATSU,0000,0000,0000,,Chẳng lẽ thằng nhóc này liều mạng đến thế sao?
Dialogue: 0,0:11:08.37,0:11:10.35,Default,NATSU,0000,0000,0000,,Chỉ có thế thôi à?
Dialogue: 0,0:11:11.98,0:11:13.23,Default,MAHIRO,0000,0000,0000,,Chết tiệt.
Dialogue: 0,0:11:15.55,0:11:18.82,Default,HAKAZE,0000,0000,0000,,Xét trên khía cạnh một phù thủy thì Natsumura không phải ở đẳng cấp cao.
Dialogue: 0,0:11:18.82,0:11:20.51,Default,HAKAZE,0000,0000,0000,,Nhưng xét về kĩ năng chiến đấu,
Dialogue: 0,0:11:20.51,0:11:22.49,Default,HAKAZE,0000,0000,0000,,chắc chắn hắn ta là một trong những người xuất sắc nhất.
Dialogue: 0,0:11:22.87,0:11:23.89,Default,HAKAZE,0000,0000,0000,,Hơn nữa...
Dialogue: 0,0:11:23.89,0:11:25.96,Default,YOSHINO,0000,0000,0000,,Phải rồi... \NVật tế có ở khắp mọi nơi.
Dialogue: 0,0:11:25.96,0:11:27.49,Default,HAKAZE,0000,0000,0000,,Cậu tiếp thu nhanh đấy.
Dialogue: 0,0:11:27.49,0:11:29.71,Default,HAKAZE,0000,0000,0000,,Không giống hai cậu bị lệ thuộc vào phù bảo,
Dialogue: 0,0:11:29.71,0:11:32.50,Default,HAKAZE,0000,0000,0000,,Natsumura có thể sử dụng ma thuật bao nhiêu tùy thích.
Dialogue: 0,0:11:36.03,0:11:36.67,Default,YOSHINO,0000,0000,0000,,Mahiro!
Dialogue: 0,0:11:41.02,0:11:43.39,Default,YOSHINO,0000,0000,0000,,Mahiro! Mahiro!
Dialogue: 0,0:11:49.40,0:11:51.19,Default,YOSHINO,0000,0000,0000,,Cậu đâu rồi?
Dialogue: 0,0:12:07.69,0:12:09.12,Default,MAHIRO,0000,0000,0000,,Tên khốn...
Dialogue: 0,0:12:09.12,0:12:11.27,Default,NATSU,0000,0000,0000,,Sẽ là phù bảo hết trước,
Dialogue: 0,0:12:11.74,0:12:14.62,Default,NATSU,0000,0000,0000,,hay sẽ là may mắn giành cho cậu?
Dialogue: 0,0:12:15.32,0:12:16.71,Default,NATSU,0000,0000,0000,,Cái nào nhỉ?
Dialogue: 0,0:12:28.25,0:12:31.15,Default,MAHIRO,0000,0000,0000,,Thằng xài thương khốn kiếp!
Dialogue: 0,0:12:32.84,0:12:34.35,Default - italics,AIKA,0000,0000,0000,,Bất cẩn quá đấy.
Dialogue: 0,0:12:39.87,0:12:42.14,Default - italics,MAHIRO,0000,0000,0000,,Đây có phải cảm cúm thường đâu.
Dialogue: 0,0:12:42.14,0:12:43.53,Default - italics,MAHIRO,0000,0000,0000,,Đầu anh đau quá.
Dialogue: 0,0:12:44.15,0:12:47.57,Default - italics,AIKA,0000,0000,0000,,Thì chính vì vậy em mới ở đây chăm sóc anh đấy thôi.
Dialogue: 0,0:12:49.20,0:12:51.48,Default - italics,MAHIRO,0000,0000,0000,,A, anh chết mất thôi.
Dialogue: 0,0:12:51.83,0:12:54.25,Default - italics,MAHIRO,0000,0000,0000,,Thèm ăn đào dầm quá...
Dialogue: 0,0:12:54.80,0:12:57.28,Default - italics,AIKA,0000,0000,0000,,Còn nói thế thì anh chưa chết được đâu.
Dialogue: 0,0:13:04.68,0:13:06.76,Default,MAHIRO,0000,0000,0000,,Ờ, đúng rồi.
Dialogue: 0,0:13:07.70,0:13:10.56,Default,MAHIRO,0000,0000,0000,,Ta không thể chết dễ dàng như vậy được...
Dialogue: 0,0:13:21.24,0:13:23.26,Default,HAKAZE,0000,0000,0000,,Mau bảo Mahiro rút lui ngay!
Dialogue: 0,0:13:23.73,0:13:25.46,Default,YOSHINO,0000,0000,0000,,Không được! Cậu ta không bắt máy.
Dialogue: 0,0:13:33.92,0:13:36.15,Default,EVA,0000,0000,0000,,Các người sẽ sử dụng bom để cách li khu vực này sao?
Dialogue: 0,0:13:36.15,0:13:38.91,Default,GUY,0000,0000,0000,,Có quá nhiều nạn nhân của Hắc Thiết Dịch.
Dialogue: 0,0:13:39.28,0:13:45.05,Default,GUY,0000,0000,0000,,Chúng tôi đã hạ lệnh đánh bom phá hủy đường hầm và cả đường cái dẫn tới thành phố bằng trực thăng ở khoảng cách xa.
Dialogue: 0,0:13:45.05,0:13:46.76,Default,EVA,0000,0000,0000,,Như vậy có hơi quá tay không?
Dialogue: 0,0:13:47.12,0:13:48.46,Default,GUY,0000,0000,0000,,Nghĩ cho kĩ đi.
Dialogue: 0,0:13:48.86,0:13:53.60,Default,GUY,0000,0000,0000,,Ai lại muốn tới một khu vực mà gần như toàn bộ sinh vật sống bị thiết hóa chứ? {Lũ bướm sao ko bị nhỉ}
Dialogue: 0,0:13:53.60,0:13:55.51,Default,GUY,0000,0000,0000,,Hơn nữa, nguyên nhân lại không rõ ràng,
Dialogue: 0,0:13:55.51,0:13:58.19,Default,GUY,0000,0000,0000,,còn mặt nạ bảo hộ lại chẳng có gì chắc sẽ có tác dụng.
Dialogue: 0,0:13:58.19,0:13:59.85,Default,EVA,0000,0000,0000,,Ấy, thế tôi thì sao?
Dialogue: 0,0:13:59.85,0:14:01.47,Default,GUY,0000,0000,0000,,Chúng tôi sẽ liên lạc với cô sau.
Dialogue: 0,0:14:02.54,0:14:03.51,Default,EVA,0000,0000,0000,,Đợi chút!
Dialogue: 0,0:14:04.91,0:14:06.53,Default,EVA,0000,0000,0000,,Thiệt tình...
Dialogue: 0,0:14:27.70,0:14:30.37,Default,YOSHINO,0000,0000,0000,,Họ đang cố cách li thành phố ư?
Dialogue: 0,0:14:31.35,0:14:32.55,Default,HAKAZE,0000,0000,0000,,Có chuyện gì à?
Dialogue: 0,0:14:32.93,0:14:34.11,Default,YOSHINO,0000,0000,0000,,À không.
Dialogue: 0,0:14:35.00,0:14:36.28,Default,YOSHINO,0000,0000,0000,,Phải rồi, Hakaze-san.
Dialogue: 0,0:14:36.28,0:14:37.48,Default,YOSHINO,0000,0000,0000,,Tôi có thể hỏi vài câu chứ?
Dialogue: 0,0:14:38.02,0:14:38.89,Default,HAKAZE,0000,0000,0000,,Gì thế?
Dialogue: 0,0:14:39.19,0:14:42.90,Default,YOSHINO,0000,0000,0000,,Có cách nào hồi sinh người chết bằng ma thuật Kusaribe không?
Dialogue: 0,0:14:43.50,0:14:45.06,Default,HAKAZE,0000,0000,0000,,Tôi đã nói rồi.
Dialogue: 0,0:14:45.06,0:14:48.18,Default,HAKAZE,0000,0000,0000,,Ma thuật Kusaribe là để bảo vệ quy luật của thế giới...
Dialogue: 0,0:14:48.18,0:14:51.28,Default,HAKAZE,0000,0000,0000,,cũng như sửa chữa, khôi phục và quản lí những quy tắc đó.
Dialogue: 0,0:14:52.03,0:14:57.69,Default,HAKAZE,0000,0000,0000,,Cậu nghĩ đưa người chết đội mồ sống dậy có thể xem như là một trong những quy tắc của thế giới sao?
Dialogue: 0,0:14:57.69,0:14:58.56,Default,YOSHINO,0000,0000,0000,,Không.
Dialogue: 0,0:15:02.85,0:15:05.89,Default,YOSHINO,0000,0000,0000,,Mahiro luôn nhắc tới việc tìm ra hung thủ và giết chết hắn,
Dialogue: 0,0:15:05.89,0:15:07.75,Default,YOSHINO,0000,0000,0000,,vậy nên tôi mới thắc mắc.
Dialogue: 0,0:15:14.08,0:15:15.86,Default,YOSHINO,0000,0000,0000,,Nếu ma thuật tồn tại trên thế giới này,
Dialogue: 0,0:15:15.86,0:15:17.93,Default,YOSHINO,0000,0000,0000,,đó lẽ ra phải là thứ đầu tiên nên thỉnh cầu.
Dialogue: 0,0:15:21.08,0:15:22.22,Default,HAKAZE,0000,0000,0000,,Nhưng mà này,
Dialogue: 0,0:15:22.22,0:15:26.39,Default,HAKAZE,0000,0000,0000,,Mahiro ngay từ đầu đã không hỏi tôi liệu có thể đưa em gái cậu ta quay trở lại hay không.
Dialogue: 0,0:15:26.39,0:15:26.99,Default,YOSHINO,0000,0000,0000,,Hả?
Dialogue: 0,0:15:26.99,0:15:30.02,Default,HAKAZE,0000,0000,0000,,Cậu ta kiêu ngạo, dễ ghét, tự cho mình là trung tâm...
Dialogue: 0,0:15:30.02,0:15:32.20,Default,HAKAZE,0000,0000,0000,,nhưng xem ra lại hiểu rất rõ chuyện này.
Dialogue: 0,0:15:32.20,0:15:35.95,Default,HAKAZE,0000,0000,0000,,Trên đời không có thứ phép màu nào kì diệu tới mức đó cả,
Dialogue: 0,0:15:35.95,0:15:39.28,Default,HAKAZE,0000,0000,0000,,và có những quy tắc không bao giờ được phép vi phạm.
Dialogue: 0,0:15:41.48,0:15:42.52,Default,YOSHINO,0000,0000,0000,,Phải rồi.
Dialogue: 0,0:15:43.14,0:15:44.96,Default,YoSHINO,0000,0000,0000,,Ma thuật tự bản thân nó đã là một điều phi lí.
Dialogue: 0,0:15:45.60,0:15:47.44,Default,YOSHINO,0000,0000,0000,,Vậy tôi sẽ tiếp tục tìm Mahiro.
Dialogue: 0,0:15:47.44,0:15:48.39,Default - italics,HAKAZE,0000,0000,0000,,Gì đây?
Dialogue: 0,0:15:49.01,0:15:52.78,Default - italics,HAKAZE,0000,0000,0000,,Có vẻ như cậu ta thực sự muốn Aika sống lại...
Dialogue: 0,0:15:53.70,0:15:56.64,Default - italics,HAKAZE,0000,0000,0000,,Không thể hiểu nổi cậu, Takigawa Yoshino.
Dialogue: 0,0:15:56.64,0:15:58.49,Default - italics,HAKAZE,0000,0000,0000,,Cậu đang che giấu điều gì thế?
Dialogue: 0,0:16:10.49,0:16:11.54,Default,MAHIRO,0000,0000,0000,,Này!
Dialogue: 0,0:16:11.54,0:16:13.24,Default,MAHIRO,0000,0000,0000,,Ngươi nghĩ có thể dồn ép ta dễ như vậy sao?
Dialogue: 0,0:16:14.87,0:16:15.82,Default,MAHIRO,0000,0000,0000,,Đỡ nè!
Dialogue: 0,0:16:17.17,0:16:18.45,Default,NATSU,0000,0000,0000,,Vô ích thôi.
Dialogue: 0,0:16:25.29,0:16:26.38,Default,MAHIRO,0000,0000,0000,,Chết đi!
Dialogue: 0,0:16:43.74,0:16:45.01,Default,YOSHINO,0000,0000,0000,,Mahiro...
Dialogue: 0,0:16:46.84,0:16:48.25,Default,YOSHINO,0000,0000,0000,,Hakaze-san!
Dialogue: 0,0:16:48.25,0:16:51.25,Default,YOSHINO,0000,0000,0000,,Ma thuật Kusaribe dùng để bảo vệ những quy luật của thế giới.
Dialogue: 0,0:16:51.25,0:16:53.82,Default,YOSHINO,0000,0000,0000,,Cũng như sửa chữa, hồi phục và quản lí nó, phải không?
Dialogue: 0,0:16:53.82,0:16:55.23,Default,HAKAZE,0000,0000,0000,,Đúng rồi.
Dialogue: 0,0:16:56.16,0:16:57.35,Default,YOSHINO,0000,0000,0000,,Vậy thì...
Dialogue: 0,0:17:07.11,0:17:09.00,Default,MAHIRO,0000,0000,0000,,Lãnh đủ nhé.
Dialogue: 0,0:17:13.16,0:17:14.96,Default,NATSU,0000,0000,0000,,Kết thúc ở đây thôi.
Dialogue: 0,0:17:14.96,0:17:16.51,Default,NATSU,0000,0000,0000,,Tôi sẽ không làm hại cậu.
Dialogue: 0,0:17:17.00,0:17:20.05,Default,NATSU,0000,0000,0000,,Cậu không có nghĩa vụ hay lí do gì để cố sống cố chết với tôi.
Dialogue: 0,0:17:20.65,0:17:22.47,Default,MAHIRO,0000,0000,0000,,Không có nghĩa vụ.
Dialogue: 0,0:17:22.47,0:17:24.11,Default,MAHIRO,0000,0000,0000,,Nhưng lí do thì có đấy...
Dialogue: 0,0:17:24.56,0:17:26.15,Default,MAHIRO,0000,0000,0000,,Rất nhiều là đằng khác!
Dialogue: 0,0:17:35.82,0:17:36.86,Default - italics,NATSU,0000,0000,0000,,Đây là...
Dialogue: 0,0:17:44.21,0:17:45.08,Default,MAHIRO,0000,0000,0000,,Yoshino?
Dialogue: 0,0:17:45.08,0:17:46.21,Default,YOSHINO,0000,0000,0000,,Được rồi, đi lối này!
Dialogue: 0,0:17:48.75,0:17:51.16,Default,MAHIRO,0000,0000,0000,,Cậu dùng ma thuật chữa thương để tìm tớ sao?
Dialogue: 0,0:17:51.16,0:17:52.25,Default,YOSHINO,0000,0000,0000,,Khó phết đấy.
Dialogue: 0,0:17:52.64,0:17:54.18,Default,YOSHINO,0000,0000,0000,,Nhưng mà đúng lúc lắm.
Dialogue: 0,0:17:54.18,0:17:55.26,Default,YOSHINO,0000,0000,0000,,Sắp tới giờ rồi...
Dialogue: 0,0:17:55.52,0:17:57.60,Default,YOSHINO,0000,0000,0000,,Mahiro, ngay sau khi ra khỏi đường hầm,
Dialogue: 0,0:17:57.60,0:17:59.39,Default,YOSHINO,0000,0000,0000,,hãy theo tớ chạy thẳng vào rừng!
Dialogue: 0,0:17:59.39,0:17:59.85,Default,MAHIRO,0000,0000,0000,,Hả?
Dialogue: 0,0:18:00.78,0:18:03.02,Default,NATSU,0000,0000,0000,,Có chạy tới đâu thì cũng vậy thôi.
Dialogue: 0,0:18:15.32,0:18:16.07,Default,YOSHINO,0000,0000,0000,,Theo tớ!
Dialogue: 0,0:18:40.37,0:18:41.70,Default,YOSHINO,0000,0000,0000,,Chuẩn giờ luôn...
Dialogue: 0,0:18:42.41,0:18:44.27,Default,MAHIRO,0000,0000,0000,,Vừa rồi là cái gì thế?
Dialogue: 0,0:18:44.83,0:18:46.41,Default,YOSHINO,0000,0000,0000,,Tên lửa từ trực thăng đấy.
Dialogue: 0,0:18:46.41,0:18:47.18,Default,MAHIRO,0000,0000,0000,,Hả?
Dialogue: 0,0:18:47.52,0:18:51.89,Default,YOSHINO,0000,0000,0000,,Tớ thấy họ đánh sập cây cầu ở phía bắc để cách li khu vực này.
Dialogue: 0,0:18:51.89,0:18:53.23,Default,YOSHINO,0000,0000,0000,,Theo đó,
Dialogue: 0,0:18:53.23,0:18:55.48,Default,YOSHINO,0000,0000,0000,,tớ nghĩ đường hầm này sẽ là nơi cuối cùng.
Dialogue: 0,0:18:55.48,0:18:57.19,Default,MAHIRO,0000,0000,0000,,Cậu ấy...
Dialogue: 0,0:18:57.19,0:18:59.20,Default,MAHIRO,0000,0000,0000,,Phải giải thích cho tớ từ đầu chứ.
Dialogue: 0,0:18:59.58,0:19:01.99,Default,YOSHINO,0000,0000,0000,,Nhưng mọi chuyện cũng xong xuôi rồi mà, phải không?
Dialogue: 0,0:19:08.37,0:19:10.37,Default,HAKAZE,0000,0000,0000,,Thiệt tình, lũ ngốc này...
Dialogue: 0,0:19:14.06,0:19:16.38,Default,HAKAZE,0000,0000,0000,,Nhưng mà, Takigawa Yoshino này...
Dialogue: 0,0:19:16.38,0:19:20.83,Default,HAKAZE,0000,0000,0000,,trong phút chốc lại có thể nghĩ ra cách tìm Mahiro bằng cách sử dụng ma thuật chữa thương,
Dialogue: 0,0:19:20.83,0:19:24.72,Default,HAKAZE,0000,0000,0000,,rồi còn dự đoán được thời điểm trực thăng thả tên lửa.
Dialogue: 0,0:19:25.41,0:19:28.06,Default,HAKAZE,0000,0000,0000,,Gã này thú vị đấy chứ.
Dialogue: 0,0:19:39.57,0:19:41.44,Default,SAMON,0000,0000,0000,,Mình thua rồi.
Dialogue: 0,0:19:43.75,0:19:45.92,Default,NATSU,0000,0000,0000,,Samon-dono, thứ lỗi cho tôi
Dialogue: 0,0:19:45.92,0:19:47.25,Default,NATSU,0000,0000,0000,,Chúng thoát rồi.
Dialogue: 0,0:19:47.25,0:19:48.31,Default,SAMON,0000,0000,0000,,Không sao.
Dialogue: 0,0:19:48.85,0:19:52.08,Default,SAMON,0000,0000,0000,,Nếu công chúa tính làm kì đà cản mũi,
Dialogue: 0,0:19:52.08,0:19:53.83,Default,SAMON,0000,0000,0000,,thì chúng ta sẽ sớm gặp lại chúng thôi.
Dialogue: 0,0:19:54.49,0:19:55.46,Default,SAMON,0000,0000,0000,,Hơn nữa...
Dialogue: 0,0:19:55.46,0:20:00.09,Default,SAMON,0000,0000,0000,,Chúng ta vẫn chưa biết làm thế nào mà hai tên nhóc đó lại dây dưa với công chúa.
Dialogue: 0,0:20:00.82,0:20:03.34,Default,SAMON,0000,0000,0000,,Đây là cuộc chiến quyết định vận mệnh của thế giới.
Dialogue: 0,0:20:03.85,0:20:05.95,Default,SAMON,0000,0000,0000,,Nếu chỉ vì tình cờ mà bị cuốn vào,
Dialogue: 0,0:20:05.95,0:20:07.76,Default,SAMON,0000,0000,0000,,thì chúng sẽ không tồn tại được lâu đâu.
Dialogue: 0,0:20:07.76,0:20:09.35,Default,NATSU,0000,0000,0000,,Nếu được vậy thì tốt.
Dialogue: 0,0:20:10.10,0:20:13.29,Default,SAMON,0000,0000,0000,,Vậy là quy tắc được tạo ra bởi Khởi Nguyên Chi Mộc
Dialogue: 0,0:20:13.29,0:20:15.76,Default,SAMON,0000,0000,0000,,tới cùng vẫn luôn ở bên công chúa...
Dialogue: 0,0:20:18.17,0:20:21.02,Default - italics,KIDS,0000,0000,0000,,{\an8}Lại một năm trôi qua.
Dialogue: 0,0:20:21.02,0:20:26.51,Default - italics,KIDS,0000,0000,0000,,{\an8}Những thung lũng nối dài qua các dãy núi.
Dialogue: 0,0:20:26.51,0:20:31.97,Default - italics,KIDS,0000,0000,0000,,{\an8}Lũ cáo lũ quỷ không thể động vào.
Dialogue: 0,0:20:30.59,0:20:34.50,Default,GRAMPS,0000,0000,0000,,Vậy là bọn trẻ quyết làm cho bằng được hả...
Dialogue: 0,0:20:31.97,0:20:37.46,Default - italics,KIDS,0000,0000,0000,,{\an8}Sự trở lại muộn màng của Khởi Nguyên Chi Mộc.
Dialogue: 0,0:20:34.50,0:20:36.31,Default,GRAMS,0000,0000,0000,,Có lẽ vậy.
Dialogue: 0,0:20:36.31,0:20:39.42,Default,GRAMPS,0000,0000,0000,,Mọi người lên núi cả rồi.
Dialogue: 0,0:20:37.46,0:20:43.29,Default - italics,KIDS,0000,0000,0000,,{\an8}Những dòng sông, những cánh đồng, từng ngọn núi sẽ đều thiết hóa.
Dialogue: 0,0:20:39.42,0:20:40.99,Default,GRAMS,0000,0000,0000,,Đúng vậy...
Dialogue: 0,0:20:41.58,0:20:45.70,Default,GRAMPS,0000,0000,0000,,Nhưng mà đối thủ của họ lại là công chúa
Dialogue: 0,0:20:43.29,0:20:45.99,Default - italics,KIDS,0000,0000,0000,,{\an8}Sẽ đều thiết hóa...
Dialogue: 0,0:20:45.70,0:20:47.89,Default,GRAMPS,0000,0000,0000,,mọi chuyện sẽ không dễ dàng đâu.
Dialogue: 0,0:20:47.02,0:20:49.32,Default - italics,KIDS,0000,0000,0000,,{\an8}Hai năm nữa trôi qua.
Dialogue: 0,0:20:47.89,0:20:50.18,Default,GRAMS,0000,0000,0000,,Đúng như vậy.
Dialogue: 0,0:20:49.32,0:20:54.40,Default - italics,KIDS,0000,0000,0000,,{\an8}Khi mặt trời khuất bóng sau những thung lũng...
Dialogue: 0,0:20:54.97,0:21:00.40,Default - italics,KIDS,0000,0000,0000,,{\an8}Như đốt cháy những đỉnh rơi vào lò...{CLGT???}
Dialogue: 0,0:21:00.40,0:21:06.00,Default - italics,KIDS,0000,0000,0000,,{\an8}Khởi Nguyên Chi Mộc sẽ phát triển thịnh vượng.
Dialogue: 0,0:21:07.41,0:21:09.11,Default,ANNOUNCER,0000,0000,0000,,Không có nạn nhân nào trong vụ sập đường hầm.
Dialogue: 0,0:21:09.11,0:21:12.07,Default,ANNOUNCER,0000,0000,0000,,Hiện vẫn đang trong quá trình điều tra xem sạt lở đất có phải nguyên nhân chính.
Dialogue: 0,0:21:12.07,0:21:14.56,Default,ANNOUNCER,0000,0000,0000,,Lực lượng phòng hộ chống thảm họa thiên nhiên
Dialogue: 0,0:21:14.56,0:21:17.13,Default,ANNOUNCER,0000,0000,0000,,đã tiến vào khu vực điều tra.
Dialogue: 0,0:21:15.66,0:21:17.13,Default,YOSHINO,0000,0000,0000,,Không có nạn nhân hả?
Dialogue: 0,0:21:18.13,0:21:19.88,Default,MAHIRO,0000,0000,0000,,Nhưng mà tiếc thật đấy.
Dialogue: 0,0:21:20.30,0:21:22.02,Default,MAHIRO,0000,0000,0000,,Lẽ ra đã có thể kết liễu hắn.
Dialogue: 0,0:21:22.53,0:21:25.72,Default,YOSHINO,0000,0000,0000,,Ưu tiên hàng đầu đâu phải đánh bại phù thủy.
Dialogue: 0,0:21:25.72,0:21:27.71,Default,HAKAZE,0000,0000,0000,,Yoshino nói đúng đấy.
Dialogue: 0,0:21:28.18,0:21:30.70,Default,HAKAZE,0000,0000,0000,,Chúng ta có thể ngăn chặn sự phục sinh của Tuyệt Viên Chi Mộc
Dialogue: 0,0:21:30.70,0:21:33.38,Default,HAKAZE,0000,0000,0000,,mà không cần phải đối đầu trực tiếp với Samon cùng đồng bọn.
Dialogue: 0,0:21:33.38,0:21:34.58,Default,MAHIRO,0000,0000,0000,,Không.
Dialogue: 0,0:21:34.58,0:21:37.42,Default,MAHIRO,0000,0000,0000,,Chúng ta phải đối đầu trực tiếp với lũ phù thủy đó.
Dialogue: 0,0:21:37.81,0:21:38.86,Default,YOSHINO,0000,0000,0000,,Ý cậu là sao?
Dialogue: 0,0:21:39.47,0:21:41.17,Default,MAHIRO,0000,0000,0000,,Sau khi cậu rời đi,
Dialogue: 0,0:21:41.17,0:21:44.61,Default,MAHIRO,0000,0000,0000,,tớ đã sử dụng ma thuật của Hakaze để rút bớt danh sách tình nghi.
Dialogue: 0,0:21:45.56,0:21:46.94,Default,MAHIRO,0000,0000,0000,,Thủ phạm là...
Dialogue: 0,0:21:46.94,0:21:48.74,Default,MAHIRO,0000,0000,0000,,Người của gia tộc Kusaribe!
Dialogue: 0,0:21:49.92,0:21:50.70,Default,YOSHINO,0000,0000,0000,,Không lẽ nào.
Dialogue: 0,0:21:50.97,0:21:52.65,Default,HAKAZE,0000,0000,0000,,Không nghi ngờ gì nữa.
Dialogue: 0,0:21:52.65,0:21:56.42,Default,HAKAZE,0000,0000,0000,,Không lời xin lỗi nào là đủ, đặc biệt khi lúc đó tôi còn là trưởng gia tộc.
Dialogue: 0,0:21:56.42,0:21:58.46,Default,HAKAZE,0000,0000,0000,,Kẻ sát nhân đúng là người trong tộc.
Dialogue: 0,0:21:58.46,0:22:01.41,Default,YOSHINO,0000,0000,0000,,Mối liên hệ gì thế này?
Dialogue: 0,0:22:01.97,0:22:03.66,Default,YOSHINO,0000,0000,0000,,Có sự trùng hợp thế này sao?
Dialogue: 0,0:22:04.21,0:22:07.49,Default,YoSHINO,0000,0000,0000,,Hay đây là điều nhất định phải xảy ra?
Dialogue: 0,0:22:08.60,0:22:10.12,Default,MAHIRO,0000,0000,0000,,Không phải lo gì hết.
Dialogue: 0,0:22:10.12,0:22:12.11,Default,MAHIRO,0000,0000,0000,,Tất cả những chuyện này chỉ là một dạng của vận mệnh thôi.
Dialogue: 0,0:22:12.96,0:22:14.14,Default,YOSHINO,0000,0000,0000,,Một dạng à?
Dialogue: 0,0:22:14.79,0:22:15.83,Default,YOSHINO,0000,0000,0000,,Là sao?
Dialogue: 0,0:24:02.50,0:24:06.75,Default,HAKAZE,0000,0000,0000,,Tôi tự hỏi chuyện gì sẽ xảy ra nếu cậu không gặp được Yoshino.
Dialogue: 0,0:24:07.18,0:24:09.13,Default,YOSHINO,0000,0000,0000,,Chúng tôi không phải bạn bè.
Dialogue: 0,0:24:09.13,0:24:11.72,Default,MAHIRO,0000,0000,0000,,Nếu không gặp Yoshino...
Dialogue: 0,0:24:12.04,0:24:13.89,Default,YOSHINO,0000,0000,0000,,Đúng vậy, chúng tôi đã tránh mặt nhau.
Dialogue: 0,0:24:13.89,0:24:16.97,Default,MAHIRO,0000,0000,0000,,Có gì đó trong cậu ta mà tôi sẽ không bao giờ có thể hiểu nổi.
Dialogue: 0,0:24:17.56,0:24:21.26,Default,YOSHINO,0000,0000,0000,,Tôi đã từng nghĩ tới chuyện cắt đứt quan hệ với cậu ta rồi đấy.
Dialogue: 0,0:24:21.26,0:24:22.41,Default,HAKAZE,0000,0000,0000,,Thế à.
Dialogue: 0,0:24:22.41,0:24:23.98,Default,,0000,0000,0000,,Câu chuyện có vẻ không được hấp dẫn lắm.
