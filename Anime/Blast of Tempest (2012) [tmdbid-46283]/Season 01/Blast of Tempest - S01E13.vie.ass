Dialogue: 0,0:00:53.19,0:00:55.28,Default,AIKA,0000,0000,0000,,Đừng có đột ngột thức dậy như thế.
Dialogue: 0,0:00:55.64,0:00:57.32,Default,,0000,0000,0000,,Anh làm em giật mình đấy.
Dialogue: 0,0:00:59.16,0:01:01.15,Default,Mahiro,0000,0000,0000,,Aika...
Dialogue: 0,0:01:01.15,0:01:02.91,Default,AIKA,0000,0000,0000,,Anh gặp ác mộng à?
Dialogue: 0,0:01:03.89,0:01:05.39,Default - italics,Mahiro,0000,0000,0000,,Sao Aika lại ở đây?
Dialogue: 0,0:01:06.51,0:01:07.67,Default - italics,,0000,0000,0000,,Aika...
Dialogue: 0,0:01:07.96,0:01:09.67,Default,aika,0000,0000,0000,,Vẫn chưa tỉnh hẳn à?
Dialogue: 0,0:01:11.21,0:01:13.73,Default,mahiro,0000,0000,0000,,À, chắc là mơ thôi...
Dialogue: 0,0:01:14.53,0:01:17.94,Default - italics,aika,0000,0000,0000,,Chúng ta vốn được tạo nên bởi những giấc mơ.
Dialogue: 0,0:01:18.41,0:01:22.04,Default - italics,AIKA,0000,0000,0000,,Và cuộc đời ngắn ngủi cũng chỉ xoay quanh giấc ngủ.
Dialogue: 0,0:01:23.02,0:01:26.24,Default,aika,0000,0000,0000,,Nếu tất cả chỉ là ác mộng, sao anh không ngủ tiếp?
Dialogue: 0,0:01:27.22,0:01:28.60,Default,mahiro,0000,0000,0000,,{\i1}Tempest{\i0} hả?
Dialogue: 0,0:01:28.60,0:01:30.40,Default,aika,0000,0000,0000,,Ái chà, anh cũng đọc à?
Dialogue: 0,0:01:30.89,0:01:33.28,Default,mahiro,0000,0000,0000,,Đọc để bình phẩm ấy mà.
Dialogue: 0,0:01:33.28,0:01:34.90,Default,aika,0000,0000,0000,,Vẫn nhỏ nhen như mọi khi.
Dialogue: 0,0:01:36.62,0:01:38.70,Default,mahiro,0000,0000,0000,,Đó lại là một câu chuyện về báo thù phải không?
Dialogue: 0,0:01:38.70,0:01:41.43,Default,mahiro,0000,0000,0000,,Vậy thì nó phải kết thúc bằng một bi kịch mới đúng.
Dialogue: 0,0:01:42.46,0:01:45.44,Default,mahiro,0000,0000,0000,,Dùng nỗi đau để xoa dịu chính nó.
Dialogue: 0,0:01:45.95,0:01:49.20,Default,mahiro,0000,0000,0000,,Vậy thì thứ còn lại sau cùng vẫn chỉ là nỗi đau mà thôi.
Dialogue: 0,0:01:49.74,0:01:55.96,Default - italics,,0000,0000,0000,,Ôi! Thật đau khổ biết bao khi phải chứng kiến những con người bất hạnh.
Dialogue: 0,0:01:57.12,0:02:01.30,Default - italics,,0000,0000,0000,,Con tàu tuyệt vời với những con người tốt bụng
Dialogue: 0,0:02:02.26,0:02:04.33,Default - italics,,0000,0000,0000,,vỡ tan thành từng mảnh.
Dialogue: 0,0:02:06.06,0:02:09.06,Title,sign,0000,0000,0000,,Tập 13 \NNgọn nguồn của giấc mơ
Dialogue: 0,0:02:12.30,0:02:13.59,Default - italics,mahiro,0000,0000,0000,,Đúng vậy...
Dialogue: 0,0:02:13.59,0:02:15.38,Default - italics,mahiro,0000,0000,0000,,Đây là câu chuyện về sự báo thù.
Dialogue: 0,0:02:16.17,0:02:20.19,Default - italics,mahiro,0000,0000,0000,,Một câu chuyện về báo thù, nên chỉ có thể dùng nỗi đau để chấm dứt nỗi đau.
Dialogue: 0,0:02:20.94,0:02:22.66,Default,yoshino,0000,0000,0000,,Cậu nghĩ vậy thật sao?
Dialogue: 0,0:02:24.89,0:02:25.97,Default,yoshino,0000,0000,0000,,Mahiro...
Dialogue: 0,0:02:26.66,0:02:30.08,Default,yoshino,0000,0000,0000,,Cậu bắt đầu cuộc hành trình này chỉ để nó kết thúc trong bi kịch sao?
Dialogue: 0,0:02:31.21,0:02:31.79,Default,mahiro,0000,0000,0000,,Hành trình?
Dialogue: 0,0:02:33.78,0:02:35.05,Default,yoshino,0000,0000,0000,,Quên rồi à?
Dialogue: 0,0:02:36.82,0:02:37.98,Default - italics,mahiro,0000,0000,0000,,Đúng rồi.
Dialogue: 0,0:02:39.87,0:02:41.88,Default - italics,mahiro,0000,0000,0000,,Mình đã có một cuộc hành trình cùng cậu ta.
Dialogue: 0,0:02:42.70,0:02:45.49,Default,yoshino,0000,0000,0000,,Không phải mục đích của chuyến hành trình là cứu thế giới sao?
Dialogue: 0,0:02:48.41,0:02:50.95,Default - italics,mahiro,0000,0000,0000,,Tớ sẽ cứu lấy thế giới!
Dialogue: 0,0:03:00.23,0:03:01.57,Default,mahiro,0000,0000,0000,,Cứu lấy thế giới?
Dialogue: 0,0:03:02.94,0:03:04.96,Default,mahiro,0000,0000,0000,,Chẳng phải thứ gì vĩ đại như vậy.
Dialogue: 0,0:03:05.55,0:03:07.87,Default,mahiro,0000,0000,0000,,Nếu thế giới thực sự được cứu thì có lẽ là do một nguyên nhân khác.
Dialogue: 0,0:03:10.88,0:03:14.20,Default - italics,mahiro,0000,0000,0000,,Yoshino, tại sao Aika lại phải chết?
Dialogue: 0,0:03:15.01,0:03:16.09,Default - italics,mahiro,0000,0000,0000,,Thật quá vô lí!
Dialogue: 0,0:03:17.89,0:03:19.37,Default - italics,mahiro,0000,0000,0000,,Không công bằng chút nào...
Dialogue: 0,0:03:20.06,0:03:20.84,Default,mahiro,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:03:21.34,0:03:24.97,Default,mahiro,0000,0000,0000,,Em gái mình, Aika, bị giết hại.
Dialogue: 0,0:03:25.53,0:03:29.25,Default - italics,mahiro,0000,0000,0000,,Tớ sẽ làm tất cả để đòi lại sự công bằng!
Dialogue: 0,0:03:30.22,0:03:33.27,Default,mahiro,0000,0000,0000,,Mình đã thề phải tìm bằng được hung thủ,
Dialogue: 0,0:03:33.71,0:03:36.98,Default,,0000,0000,0000,,nhưng chuyện đó có liên quan tới việc giải cứu thế giới không?
Dialogue: 0,0:03:37.64,0:03:38.95,Default - italics,hakaze,0000,0000,0000,,Này, Mahiro...
Dialogue: 0,0:03:39.50,0:03:41.63,Default - italics,hakaze,0000,0000,0000,,Đây là giao dịch công bằng đấy.
Dialogue: 0,0:03:41.63,0:03:43.67,Default - italics,hakaze,0000,0000,0000,,Tôi chẳng mắc nợ cậu cái gì hết.
Dialogue: 0,0:03:43.67,0:03:45.49,Default - italics,hakaze,0000,0000,0000,,Nói thì nói vậy, Hakaze,
Dialogue: 0,0:03:45.49,0:03:47.63,Default - italics,mahiro,0000,0000,0000,,nhưng chính cô mới là người gặp rắc rối nếu không có tôi...
Dialogue: 0,0:03:48.24,0:03:49.27,Default - italics,hakaze,0000,0000,0000,,Ồ?
Dialogue: 0,0:03:50.23,0:03:55.85,Default - italics,hakaze,0000,0000,0000,,Vậy là cậu không cần tôi tìm ra hung thủ giết em gái cậu nữa phải không?
Dialogue: 0,0:03:56.30,0:03:57.25,Default,mahiro,0000,0000,0000,,Hakaze...
Dialogue: 0,0:03:58.97,0:04:00.43,Default,mahiro,0000,0000,0000,,Kusaribe Hakaze.
Dialogue: 0,0:04:01.87,0:04:05.01,Default,mahiro,0000,0000,0000,,Người được bảo hộ bởi Khởi Nguyên Chi Mộc,
Dialogue: 0,0:04:05.01,0:04:07.05,Default,mahiro,0000,0000,0000,,công chúa gia tộc Kusaribe.
Dialogue: 0,0:04:09.09,0:04:13.81,Default,mahiro,0000,0000,0000,,Nhưng một ngày, cô ấy bị bỏ vào thùng,\N thả trôi dạt tới đảo hoang.
Dialogue: 0,0:04:14.46,0:04:18.19,Default,mahiro,0000,0000,0000,,Để có thể liên lạc với thế giới bên ngoài,
Dialogue: 0,0:04:18.19,0:04:21.69,Default,mahiro,0000,0000,0000,,Hakaze đã phải bỏ hình nhân ma thuật vào một cái chai.
Dialogue: 0,0:04:22.27,0:04:24.26,Default,mahiro,0000,0000,0000,,Và tôi đã vô tình nhặt được nó.
Dialogue: 0,0:04:25.79,0:04:28.50,Default,mahiro,0000,0000,0000,,Tôi đã làm một cuộc trao đổi với phù thủy.
Dialogue: 0,0:04:29.70,0:04:33.35,Default,mahiro,0000,0000,0000,,Tuyệt Viên Chi Mộc từng một lần muốn hủy diệt thế giới,
Dialogue: 0,0:04:33.35,0:04:36.33,Default,mahiro,0000,0000,0000,,nhưng nó đã thất bại trước Khởi Nguyên Chi Mộc, bị đốn hạ và phong ấn.
Dialogue: 0,0:04:36.90,0:04:39.85,Default,mahiro,0000,0000,0000,,Tuy nhiên, Khởi Nguyên Chi Mộc cũng hứng chịu tổn thất không nhỏ,
Dialogue: 0,0:04:39.85,0:04:42.21,Default,mahiro,0000,0000,0000,,nó đã chìm vào giấc ngủ, vừa hồi phục, vừa ngầm bảo hộ cho thế giới.
Dialogue: 0,0:04:43.87,0:04:48.05,Default,mahiro,0000,0000,0000,,Nhiệm vụ của gia tộc Kusaribe là ngăn chặn sự phục sinh của Tuyệt Viên Chi Mộc
Dialogue: 0,0:04:48.05,0:04:50.49,Default,,0000,0000,0000,,trước khi Khởi Nguyên Chi Mộc thức tỉnh.
Dialogue: 0,0:04:49.71,0:04:57.90,Default - italics,creeps in bg,0000,0000,0000,,{\an8}Trở lại! Trở lại! Trở lại!
Dialogue: 0,0:04:51.29,0:04:53.80,Default,mahiro,0000,0000,0000,,Thế nhưng, thủ lĩnh của gia tộc Kusaribe, Kusaribe Samon,
Dialogue: 0,0:04:53.80,0:04:57.38,Default,mahiro,0000,0000,0000,,mưu đồ hồi sinh Tuyệt Viên Chi Mộc.
Dialogue: 0,0:04:59.13,0:05:01.80,Default,mahiro,0000,0000,0000,,Chỉ có một mình công chúa chống lại kế hoạch đó,
Dialogue: 0,0:05:01.80,0:05:04.32,Default,,0000,0000,0000,,cô ấy đã bị cả gia tộc bỏ rơi.
Dialogue: 0,0:05:09.79,0:05:12.00,Default,mahiro,0000,0000,0000,,Để phục sinh Tuyệt Viên Chi Mộc,
Dialogue: 0,0:05:12.00,0:05:15.75,Default,mahiro,0000,0000,0000,,cần phải tập trung toàn bộ trái cây nằm rải rác khắp nước Nhật.
Dialogue: 0,0:05:17.77,0:05:21.50,Default,mahiro,0000,0000,0000,,Hành động này đã gây ra cái chết cho rất nhiều người.
Dialogue: 0,0:05:22.75,0:05:26.58,Default,mahiro,0000,0000,0000,,Hiện tượng xảy ra khi một trái cây xuất hiện,
Dialogue: 0,0:05:26.58,0:05:29.25,Default,,0000,0000,0000,,Hắc Thiết Dịch.
Dialogue: 0,0:05:31.98,0:05:34.89,Default,mahiro,0000,0000,0000,,Rất nhiều thành phố bị sụp đổ, con người bị hủy hoại.
Dialogue: 0,0:05:36.18,0:05:39.22,Default,mahiro,0000,0000,0000,,Nhưng những chuyện đó chả liên quan gì tới tôi.
Dialogue: 0,0:05:40.11,0:05:42.79,Default,mahiro,0000,0000,0000,,Tôi đã thỏa thuận với Hakaze.
Dialogue: 0,0:05:44.72,0:05:47.39,Default,mahiro,0000,0000,0000,,Tôi giúp đỡ Hakaze,
Dialogue: 0,0:05:47.39,0:05:52.16,Default,mahiro,0000,0000,0000,,đổi lại, cô ta phải giúp tôi dùng ma thuật tìm ra hung thủ giết Aika.
Dialogue: 0,0:05:53.11,0:05:55.37,Default - italics,mahiro,0000,0000,0000,,Ta đã đợi cả năm trời
Dialogue: 0,0:05:55.37,0:05:58.54,Default - italics,mahiro,0000,0000,0000,,để giết chết tên hung thủ sát hại Aika bằng chính đôi tay này!
Dialogue: 0,0:05:59.26,0:06:00.13,Default,mahiro,0000,0000,0000,,Đúng vậy...
Dialogue: 0,0:06:00.13,0:06:03.39,Default,mahiro,0000,0000,0000,,Tôi đã giúp phù thủy và cứu lấy thế giới.
Dialogue: 0,0:06:03.39,0:06:04.80,Default,mahiro,0000,0000,0000,,Dù rằng đó chỉ là "nhân tiện".
Dialogue: 0,0:06:05.11,0:06:07.27,Default - italics,mahiro,0000,0000,0000,,Thành phố này sẽ sớm bị cách li.
Dialogue: 0,0:06:07.27,0:06:08.49,Default - italics,mahiro,0000,0000,0000,,Cậu mau trốn đi thật xa.
Dialogue: 0,0:06:09.55,0:06:11.17,Default,mahiro,0000,0000,0000,,Takigawa Yoshino,
Dialogue: 0,0:06:11.17,0:06:13.47,Default,mahiro,0000,0000,0000,,người bạn duy nhất cùng tôi chia sẻ ngọt bùi từ hồi còn bé tí.
Dialogue: 0,0:06:13.47,0:06:16.04,Default,mahiro,0000,0000,0000,,Tôi đã định chia tay với cậu ta lúc đó.
Dialogue: 0,0:06:17.87,0:06:18.78,Default - italics,mahiro,0000,0000,0000,,Vậy nhé!
Dialogue: 0,0:06:19.43,0:06:22.48,Default - italics,,0000,0000,0000,,Tớ sẽ trở lại sau khi giết chết tên hung thủ sát hại Aika.
Dialogue: 0,0:06:23.22,0:06:25.32,Default - italics,,0000,0000,0000,,Tới lúc đó, nhớ giới thiệu tớ bạn gái của cậu.
Dialogue: 0,0:06:26.18,0:06:27.49,Default - italics,yoshino,0000,0000,0000,,Phải rồi.
Dialogue: 0,0:06:27.86,0:06:29.41,Default - italics,,0000,0000,0000,,Tới lúc đó,
Dialogue: 0,0:06:29.41,0:06:31.27,Default - italics,,0000,0000,0000,,tớ sẽ giới thiệu cô ấy với cậu.
Dialogue: 0,0:06:32.44,0:06:34.19,Default,mahiro,0000,0000,0000,,Vậy mà cái tên đó...
Dialogue: 0,0:06:37.29,0:06:38.73,Default - italics,mahiro,0000,0000,0000,,Ồ, may quá...
Dialogue: 0,0:06:39.96,0:06:41.03,Default - italics,mahiro,0000,0000,0000,,Yoshino?!
Dialogue: 0,0:06:41.97,0:06:43.94,Default - italics,,0000,0000,0000,,Cậu? Dở hơi à?
Dialogue: 0,0:06:44.26,0:06:46.56,Default - italics,mahiro,0000,0000,0000,,Đã bảo không cần phải đi cùng tớ!
Dialogue: 0,0:06:47.09,0:06:48.30,Default - italics,yoshino,0000,0000,0000,,Thì, đó...
Dialogue: 0,0:06:48.84,0:06:53.30,Default - italics,,0000,0000,0000,,Nếu bỏ mặc bạn bè trong lúc khó khăn như vậy... Bạn gái tớ sẽ giận tớ lắm.
Dialogue: 0,0:06:53.80,0:06:55.57,Default - italics,mahiro,0000,0000,0000,,Đụt quá đấy.
Dialogue: 0,0:06:56.64,0:06:59.98,Default,mahiro,0000,0000,0000,,Cuộc hành trình của tôi và Yoshino bắt đầu từ đó.
Dialogue: 0,0:07:02.36,0:07:05.27,Default - italics,mahiro,0000,0000,0000,,Chúng ta nên đối đầu trực tiếp với phù thủy.
Dialogue: 0,0:07:05.79,0:07:07.03,Default - italics,yoshino,0000,0000,0000,,Cậu đang nói gì vậy?
Dialogue: 0,0:07:07.62,0:07:09.23,Default - italics,mahiro,0000,0000,0000,,Sau khi cậu rời đi,
Dialogue: 0,0:07:09.23,0:07:12.78,Default - italics,,0000,0000,0000,,tớ đã sử dụng ma thuật của Hakaze để rút ngắn danh sách tình nghi.
Dialogue: 0,0:07:13.63,0:07:15.00,Default - italics,mahiro,0000,0000,0000,,Thủ phạm là...
Dialogue: 0,0:07:15.00,0:07:16.91,Default - italics,mahiro,0000,0000,0000,,người của gia tộc Kusaribe.
Dialogue: 0,0:07:20.91,0:07:22.05,Default - italics,tetsu,0000,0000,0000,,Gã cầm thương?
Dialogue: 0,0:07:23.67,0:07:25.00,Default - italics,tetsu,0000,0000,0000,,Natsumura phải không?
Dialogue: 0,0:07:25.26,0:07:28.96,Default - italics,eva,0000,0000,0000,,Nói cho ta tên của người, hỡi phù thủy.
Dialogue: 0,0:07:29.79,0:07:33.84,Default - italics,natsu,0000,0000,0000,,Tên của ta không quan trọng tới mức buộc cô phải nhớ.
Dialogue: 0,0:07:38.76,0:07:44.81,Default - italics,mahiro,0000,0000,0000,,Gia tộc Kusaribe có khả năng mượn sức mạnh từ Khởi Nguyên Chi Mộc để sử dụng ma thuật.
Dialogue: 0,0:07:46.29,0:07:47.94,Default - italics,samon,0000,0000,0000,,Vậy thì thưa công chúa.
Dialogue: 0,0:07:47.94,0:07:50.49,Default - italics,samon,0000,0000,0000,,Hãy để chúng tôi đặt dấu chấm hết cho cái vận may này của cô.
Dialogue: 0,0:07:51.69,0:07:53.07,Default - italics,hakaze,0000,0000,0000,,Samon.
Dialogue: 0,0:07:53.07,0:07:55.87,Default - italics,hakaze,0000,0000,0000,,Có mỗi cái quần lót thì ta vẫn nguy hiểm lắm đấy.
Dialogue: 0,0:07:56.88,0:08:02.83,Default,mahiro,0000,0000,0000,,Thiên Hạ Đệ Nhất Phù Thủy, người nhận được sự bảo hộ toàn diện của Khởi Nguyên Chi Mộc, Kusaribe Hakaze.
Dialogue: 0,0:08:04.02,0:08:07.04,Default,mahiro,0000,0000,0000,,Luật của Khởi Nguyên Chi Mộc chính là luật của Hakaze.
Dialogue: 0,0:08:07.83,0:08:11.53,Default,mahiro,0000,0000,0000,,Cô ta muốn gì, Khởi Nguyên Chi Mộc sẽ làm vậy.
Dialogue: 0,0:08:12.85,0:08:17.93,Default,mahiro,0000,0000,0000,,Nếu tất cả mọi chuyện xảy ra đều do Hakaze và Khởi Nguyên Chi Mộc sắp đặt...
Dialogue: 0,0:08:20.32,0:08:21.35,Default - italics,mahiro,0000,0000,0000,,Đi thôi.
Dialogue: 0,0:08:27.49,0:08:29.71,Default - italics,samon,0000,0000,0000,,Hai người tới rồi, các chàng trai.
Dialogue: 0,0:08:30.82,0:08:34.48,Default,mahiro,0000,0000,0000,,Trong khi quân đội đang chiến đấu chống lại Tuyệt Viên Chi Mộc,
Dialogue: 0,0:08:34.85,0:08:37.77,Default,mahiro,0000,0000,0000,,chúng tôi đã đối mặt với Samon.
Dialogue: 0,0:08:38.64,0:08:40.41,Default - italics,hakaze,0000,0000,0000,,Lâu quá không gặp, Samon.
Dialogue: 0,0:08:40.80,0:08:42.85,Default - italics,,0000,0000,0000,,4 tháng rồi nhỉ?
Dialogue: 0,0:08:42.85,0:08:45.05,Default - italics,hakaze,0000,0000,0000,,Có vẻ như ngươi vẫn sống tốt.
Dialogue: 0,0:08:46.10,0:08:47.13,Default - italics,samon,0000,0000,0000,,Công chúa cũng vậy,
Dialogue: 0,0:08:47.79,0:08:50.51,Default - italics,samon,0000,0000,0000,,dù đã ở xa lắm rồi.
Dialogue: 0,0:08:51.41,0:08:54.35,Default,mahiro,0000,0000,0000,,Với phù bảo đặc biệt do Hakaze tạo ra,
Dialogue: 0,0:08:54.35,0:08:59.32,Default,,0000,0000,0000,,chiến thắng của chúng tôi lẽ ra phải được đảm bảo từ khi tới nơi này, thế nhưng...
Dialogue: 0,0:09:00.63,0:09:07.10,Default,mahiro,0000,0000,0000,,Samon lại nói không phải Tuyệt Viên Chi Mộc mà chính Khởi Nguyên Chi Mộc mới là thứ hủy hoại thế giới.
Dialogue: 0,0:09:07.50,0:09:10.52,Default - italics,mahiro,0000,0000,0000,,Nhưng với tôi thì sao cũng được.
Dialogue: 0,0:09:11.82,0:09:13.94,Default - italics,mahiro,0000,0000,0000,,Thế giới hãy cứ dẹp qua một bên.
Dialogue: 0,0:09:14.23,0:09:16.65,Default - italics,mahiro,0000,0000,0000,,Nào, mau đưa Hakaze trở lại...
Dialogue: 0,0:09:17.59,0:09:18.59,Default,mahiro,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:09:18.59,0:09:20.94,Default,mahiro,0000,0000,0000,,Việc cứu thế giới cứ dẹp qua một bên!
Dialogue: 0,0:09:21.59,0:09:24.74,Default - italics,mahiro,0000,0000,0000,,Ta muốn ngươi tìm cho ta một người!
Dialogue: 0,0:09:26.19,0:09:26.92,Default,Mahiro,0000,0000,0000,,Vậy mà...
Dialogue: 0,0:09:30.46,0:09:33.52,Default - italics,samon,0000,0000,0000,,Công chúa, hiện giờ là năm nào?
Dialogue: 0,0:09:34.65,0:09:37.76,Default - italics,hakaze,0000,0000,0000,,Hiện giờ, là...
Dialogue: 0,0:09:39.50,0:09:44.39,Default,mahiro,0000,0000,0000,,Công chúa Kusaribe đã bị giam trong nhà tù thời gian 2 năm về trước.
Dialogue: 0,0:09:45.70,0:09:49.58,Default,mahiro,0000,0000,0000,,Cô ta chỉ còn lại bộ xương, có mang trở về cũng vô ích.
Dialogue: 0,0:09:51.88,0:09:54.48,Default,meahio,0000,0000,0000,,Thế là giao dịch giữa tôi và Hakaze coi như chấm dứt.
Dialogue: 0,0:09:56.46,0:09:58.30,Default - italics,mahrio,0000,0000,0000,,Tiếc quá, Hakaze.
Dialogue: 0,0:09:58.91,0:10:01.24,Default - italics,mahiro,0000,0000,0000,,Mà cô chỉ còn lại bộ xương, biết sao được.
Dialogue: 0,0:10:01.81,0:10:03.37,Default - italics,mahiro,0000,0000,0000,,Vậy nên cứ chết rục nơi đó đi nhé.
Dialogue: 0,0:10:04.17,0:10:07.20,Default - italics,mahiro,0000,0000,0000,,Giờ thì chỉ cần đối phó với người khác.
Dialogue: 0,0:10:07.20,0:10:10.81,Default - italics,mahiro,0000,0000,0000,,Tất cả vì mục tiêu tìm ra hung thủ giết Aika.
Dialogue: 0,0:10:12.29,0:10:13.42,Default - italics,samon,0000,0000,0000,,Được rồi.
Dialogue: 0,0:10:13.42,0:10:14.84,Default - italics,samon,0000,0000,0000,,Ta sẽ đáp ứng nguyện vọng của cậu.
Dialogue: 0,0:10:16.13,0:10:19.09,Default,mahiro,0000,0000,0000,,Thỏa thuận lẽ ra đã được hoàn thành, thế nhưng...
Dialogue: 0,0:10:19.39,0:10:20.47,Default - italics,yoshino,0000,0000,0000,,Xin lỗi, Mahiro.
Dialogue: 0,0:10:25.74,0:10:27.21,Default - italics,mahiro,0000,0000,0000,,Cậu đang làm cái quái gì thế?!
Dialogue: 0,0:10:27.21,0:10:29.60,Default - italics,yoshino,0000,0000,0000,,Tớ cần mượn món phù bảo đó một lát.
Dialogue: 0,0:10:37.90,0:10:41.03,Default - italics,yoshino,0000,0000,0000,,Mahiro, nếu cậu chấp nhận quay trở lại,
Dialogue: 0,0:10:41.03,0:10:44.96,Default - italics,,0000,0000,0000,,tớ sẽ nói cho cậu biết thân phận bạn trai của Aika.
Dialogue: 0,0:10:44.96,0:10:49.21,Default,mahiro,0000,0000,0000,,Yoshino đột nhiên nói cậu ta biết bạn trai Aika là ai.
Dialogue: 0,0:10:50.34,0:10:52.17,Default - italics,mahiro,0000,0000,0000,,Cậu thực sự biết?
Dialogue: 0,0:10:52.62,0:10:53.71,Default - italics,yoshino,0000,0000,0000,,Ờ, tớ biết đấy.
Dialogue: 0,0:10:54.13,0:10:55.64,Default - italics,yoshino,0000,0000,0000,,Nhưng mà, Mahiro à,
Dialogue: 0,0:10:55.64,0:10:57.72,Default - italics,yoshino,0000,0000,0000,,trừ khi cậu đồng ý với tớ,
Dialogue: 0,0:10:58.27,0:11:00.18,Default - italics,yoshino,0000,0000,0000,,còn không thì đừng mong biết được.
Dialogue: 0,0:11:00.98,0:11:04.68,Default - italics,yoshino,0000,0000,0000,,Cậu sẽ phải sống trong băn khoăn trăn trở mãi mãi.
Dialogue: 0,0:11:05.31,0:11:06.93,Default - italics,yoshino,0000,0000,0000,,Tớ không đồng ý dễ thế đâu.
Dialogue: 0,0:11:07.84,0:11:09.16,Default - italics,yoshino,0000,0000,0000,,Cái tên Yoshino này.
Dialogue: 0,0:11:09.64,0:11:12.60,Default,Mahiro,0000,0000,0000,,Cậu ta vẫn luôn giấu con bài tẩy như vậy.
Dialogue: 0,0:11:14.38,0:11:16.07,Default,mahiro,0000,0000,0000,,Tôi không biết Yoshino đang nghĩ gì,
Dialogue: 0,0:11:16.07,0:11:20.24,Default,mahiro,0000,0000,0000,,nhưng để chứng minh việc đưa Hakaze trở lại là có thể,
Dialogue: 0,0:11:20.68,0:11:22.36,Default,mahiro,0000,0000,0000,,cậu ta bắt đầu cuộc tranh cãi dài lê thê.
Dialogue: 0,0:11:23.39,0:11:25.40,Default,mahiro,0000,0000,0000,,Mặc dù lập luận của cậu ta như dở hơi,
Dialogue: 0,0:11:26.12,0:11:29.21,Default,mahiro,0000,0000,0000,,nhưng cũng đủ để vực lại tinh thần cho cô công chúa kia.
Dialogue: 0,0:11:31.62,0:11:32.65,Default - italics,tetsu,0000,0000,0000,,Samon-dono.
Dialogue: 0,0:11:34.71,0:11:38.05,Default - italics,tetsu,0000,0000,0000,,Chúng tôi đã điều tra về vụ án mạng 1 năm về trước.
Dialogue: 0,0:11:38.64,0:11:39.63,Default - italics,samon,0000,0000,0000,,Thế à?
Dialogue: 0,0:11:39.63,0:11:41.34,Default - italics,samon,0000,0000,0000,,Đã tìm ra thủ phạm rồi!
Dialogue: 0,0:11:42.01,0:11:43.97,Default - italics,mahiro,0000,0000,0000,,Vậy là kết thúc rồi.
Dialogue: 0,0:11:43.97,0:11:45.58,Default - italics,mahiro,0000,0000,0000,,Tớ đã biết ai giết Aika,
Dialogue: 0,0:11:45.58,0:11:48.14,Default - italics,mahiro,0000,0000,0000,,Hakaze có quay lại không cũng chẳng quan trọng nữa.
Dialogue: 0,0:11:49.17,0:11:51.02,Default - italics,tetsu,0000,0000,0000,,Chuyện đó, Samon-dono...
Dialogue: 0,0:11:51.29,0:11:53.40,Default - italics,,0000,0000,0000,,Thủ phạm không phải người trong gia tộc!
Dialogue: 0,0:12:00.00,0:12:07.61,Default - italics,hakaze,0000,0000,0000,,Rất có thể có một kẻ khác có thể thoát khỏi tấm lưới ma thuật!
Dialogue: 0,0:12:07.61,0:12:10.44,Default - italics,hakaze,0000,0000,0000,,Không, một kẻ mà chính sự tồn tại của hắn đã nằm ngoài mọi quy luật.
Dialogue: 0,0:12:11.72,0:12:15.19,Default - italics,hakaze,0000,0000,0000,,Chính là... Tuyệt Viên Pháp Sư!
Dialogue: 0,0:12:16.29,0:12:22.63,Default,mahiro,0000,0000,0000,,Tuyệt Viên Chi Mộc là thứ duy nhất đủ quyền năng đối chọi lại Khởi Nguyên Chi Mộc.
Dialogue: 0,0:12:23.61,0:12:26.74,Default,mahiro,0000,0000,0000,,Có phải chính Tuyệt Viên Pháp Sư đã giết Aika?
Dialogue: 0,0:12:27.62,0:12:33.34,Default,mahiro,0000,0000,0000,,Hay chính Khởi Nguyên Chi Mộc mới là thủ phạm để mình có động lực giúp Hakaze?
Dialogue: 0,0:12:33.92,0:12:38.94,Default - italics,hakaze,0000,0000,0000,,Cho dù Khởi Nguyên Chi Mộc có thực sự gây ra cái chết em gái Mahiro,
Dialogue: 0,0:12:38.94,0:12:41.03,Default - italics,hakaze,0000,0000,0000,,Tôi cũng nhất định phải quay trở lại!
Dialogue: 0,0:12:41.36,0:12:43.03,Default - italics,hakaze,0000,0000,0000,,Không trở lại thì chẳng thể làm gì được!
Dialogue: 0,0:12:43.03,0:12:44.35,Default - italics,,0000,0000,0000,,Không thể đền tội được...
Dialogue: 0,0:12:45.46,0:12:46.99,Default,mahiro,0000,0000,0000,,Bất kể mọi chuyện diễn biến ra sao,
Dialogue: 0,0:12:46.99,0:12:50.85,Default,,0000,0000,0000,,nếu Hakaze không thể thoát khỏi nhà tù thời gian,
Dialogue: 0,0:12:50.85,0:12:52.29,Default,,0000,0000,0000,,sẽ chẳng thể làm gì được hết.
Dialogue: 0,0:12:54.87,0:12:58.12,Default,mahiro,0000,0000,0000,,Chỉ có làm vậy mới có thể xác định được hung thủ giết Aika.
Dialogue: 0,0:13:22.48,0:13:24.68,Default - italics,hakaze,0000,0000,0000,,Ta là Kusaribe Hakaze,
Dialogue: 0,0:13:25.42,0:13:27.00,Default - italics,hakaze,0000,0000,0000,,Khởi Nguyên Công chúa.
Dialogue: 0,0:13:28.34,0:13:30.99,Default - italics,hakaze,0000,0000,0000,,Ta đã vượt qua khoảng cách 2 năm để quay trở lại.
Dialogue: 0,0:13:40.34,0:13:41.49,Default,mahiro,0000,0000,0000,,Đây là...
Dialogue: 0,0:13:41.49,0:13:42.80,Default,yoshino,0000,0000,0000,,Đã nhớ ra chưa?
Dialogue: 0,0:13:43.10,0:13:44.21,Default,mahiro,0000,0000,0000,,Tớ...
Dialogue: 0,0:13:45.16,0:13:47.25,Default,mahiro,0000,0000,0000,,Tớ và cậu...
Dialogue: 0,0:13:47.25,0:13:48.76,Default - italics,hakaze,0000,0000,0000,,Yoshino!
Dialogue: 0,0:13:57.67,0:13:58.35,Default - italics,mahiro,0000,0000,0000,,Yoshino!
Dialogue: 0,0:13:58.35,0:13:59.19,Default,mahiro,0000,0000,0000,,Đừng có qua bên đó!
Dialogue: 0,0:14:10.26,0:14:13.01,Default,mahiro,0000,0000,0000,,Vậy là mình thực sự đã chết...
Dialogue: 0,0:14:13.84,0:14:15.64,Default - italics,Aika,0000,0000,0000,,Ái chà, chưa đâu.
Dialogue: 0,0:14:16.82,0:14:18.58,Default,mahiro,0000,0000,0000,,Em đang nói cái quái gì thế?!
Dialogue: 0,0:14:18.58,0:14:20.75,Default - italics,aika,0000,0000,0000,,Chính Mahiro đã từng nói mà.
Dialogue: 0,0:14:24.03,0:14:27.30,Default,aika,0000,0000,0000,,Câu chuyện này sẽ không kết thúc bằng một bi kịch.
Dialogue: 0,0:14:42.27,0:14:43.36,Default,Mahiro,0000,0000,0000,,Mình...
Dialogue: 0,0:14:43.74,0:14:44.71,Default,Mahiro,0000,0000,0000,,lại nằm mơ sao?
Dialogue: 0,0:14:49.73,0:14:50.71,Default,Mahiro,0000,0000,0000,,Yoshino?
Dialogue: 0,0:14:52.79,0:14:53.47,Default,yoshino,0000,0000,0000,,Chào!
Dialogue: 0,0:14:53.47,0:14:55.29,Default,mahiro,0000,0000,0000,,Chào cái con khỉ! Gã đó là ai?
Dialogue: 0,0:14:55.70,0:14:57.41,Default,mahiro,0000,0000,0000,,Bạn trai của Aika là thằng nào?
Dialogue: 0,0:14:58.34,0:15:00.75,Default,yoshino,0000,0000,0000,,Cậu muốn biết những chuyện xảy ra sau đó không?
Dialogue: 0,0:15:02.17,0:15:03.25,Default,mahiro,0000,0000,0000,,Sau đó?
Dialogue: 0,0:15:11.70,0:15:13.08,Default,yoshino,0000,0000,0000,,Chết cả rồi.
Dialogue: 0,0:15:13.08,0:15:14.30,Default,yoshino,0000,0000,0000,,Mọi người đều chết hết.
Dialogue: 0,0:15:15.24,0:15:17.68,Default,yoshino,0000,0000,0000,,Khởi Nguyên Chi Mộc đã nuốt chửng bọn họ.
Dialogue: 0,0:15:25.34,0:15:28.34,Default,yoshino,0000,0000,0000,,Khởi Nguyên Chi Mộc mọc lan ra khắp thế giới,
Dialogue: 0,0:15:28.34,0:15:30.34,Default,yoshino,0000,0000,0000,,nuốt chửng các thành phố cùng nhân loại.
Dialogue: 0,0:15:30.98,0:15:34.03,Default,yoshino,0000,0000,0000,,Quân đội trên khắp thế giới tập trung lại để đánh trả.
Dialogue: 0,0:15:34.67,0:15:37.04,Default,yoshino,0000,0000,0000,,Nhưng không một ai quay về.
Dialogue: 0,0:15:39.55,0:15:42.30,Default,mahiro,0000,0000,0000,,Khởi Nguyên Chi Mộc "nuốt" tất cả bọn họ sao?
Dialogue: 0,0:15:43.21,0:15:46.29,Default,yoshino,0000,0000,0000,,Bất cứ thứ gì chống lại nó đều bị nó nuốt chửng.
Dialogue: 0,0:15:47.88,0:15:50.30,Default,yoshino,0000,0000,0000,,6 tỉ trừ đi 2 tỉ bằng bao nhiêu?
Dialogue: 0,0:15:51.44,0:15:52.67,Default,mahiro,0000,0000,0000,,4 tỉ...
Dialogue: 0,0:15:53.18,0:15:55.65,Default,yoshino,0000,0000,0000,,Đó là dân số thế giới hiện nay đấy.
Dialogue: 0,0:15:56.76,0:16:00.84,Default,yoshino,0000,0000,0000,,Rất nhiều nơi bị phá hủy, rất nhiều người bị giết hại, chỉ trong vài giờ đồng hồ.
Dialogue: 0,0:16:01.48,0:16:04.80,Default,mahiro,0000,0000,0000,,Có vẻ giải quyết chuyện này sẽ rắc rối lắm đây.
Dialogue: 0,0:16:05.95,0:16:09.61,Default,yoshino,0000,0000,0000,,Những người chết đã tan thành tro bụi, không còn thứ gì sót lại.
Dialogue: 0,0:16:10.61,0:16:12.58,Default,yoshino,0000,0000,0000,,Thần Mộc đã nuốt chửng tất cả.
Dialogue: 0,0:16:15.67,0:16:19.74,Default,yoshino,0000,0000,0000,,Nhưng Khởi Nguyên Chi Mộc không chỉ tấn công những kẻ chống lại nó.
Dialogue: 0,0:16:20.43,0:16:25.13,Default,yoshino,0000,0000,0000,,Nó xuất hiện ở cả những nơi xảy ra xung đột, bạo loạn.
Dialogue: 0,0:16:26.25,0:16:29.11,Default,yoshino,0000,0000,0000,,Ngay cả những thành phố chỉ đang rục rịch có ý định chiến tranh,
Dialogue: 0,0:16:29.11,0:16:31.95,Default,yoshino,0000,0000,0000,,Khởi Nguyên Chi Mộc cũng đánh hơi thấy và xuất hiện.
Dialogue: 0,0:16:32.49,0:16:34.72,Default,yoshino,0000,0000,0000,,Vậy nên không còn ai dám phát động chiến tranh nữa.
Dialogue: 0,0:16:35.64,0:16:38.88,Default,yoshino,0000,0000,0000,,Thần Mộc thậm chí không bỏ qua cả những tội nhỏ.
Dialogue: 0,0:16:39.42,0:16:42.64,Default,yoshino,0000,0000,0000,,Nó xuất hiện cả ở những nơi có cướp giật, côn đồ.
Dialogue: 0,0:16:43.28,0:16:47.15,Default,yoshino,0000,0000,0000,,Nếu tớ và Mahiro đánh nhau, nó cũng sẽ xuất hiện trước mặt chúng ta.
Dialogue: 0,0:16:47.99,0:16:50.30,Default,yoshino,0000,0000,0000,,Thế giới hiện giờ thật yên bình.
Dialogue: 0,0:16:53.27,0:16:54.31,Default,yoshino,0000,0000,0000,,Quà này...
Dialogue: 0,0:16:54.31,0:16:55.81,Default,yoshino,0000,0000,0000,,Tớ mua bên tiệm tạp hóa đấy.
Dialogue: 0,0:16:56.44,0:16:59.58,Default,yoshino,0000,0000,0000,,Khoảng bảy ngày sau khi vụ này xảy ra là có thể mua bán bình thường.
Dialogue: 0,0:16:59.93,0:17:02.73,Default,yoshino,0000,0000,0000,,Điện nước cũng được khôi phục toàn bộ.
Dialogue: 0,0:17:03.55,0:17:05.47,Default,mahiro,0000,0000,0000,,Nghe cũng hay đấy chứ.
Dialogue: 0,0:17:06.17,0:17:07.29,Default,yoshino,0000,0000,0000,,Không chỉ có vậy đâu.
Dialogue: 0,0:17:07.70,0:17:08.46,Default,yoshino,0000,0000,0000,,Nhìn đi.
Dialogue: 0,0:17:12.00,0:17:12.90,Default,mahiro,0000,0000,0000,,Đó là...
Dialogue: 0,0:17:13.55,0:17:15.93,Default,yoshino,0000,0000,0000,,Hiện tượng này đang xảy ra khắp nơi trên thế giới.
Dialogue: 0,0:17:16.48,0:17:18.40,Default,yoshino,0000,0000,0000,,Sa mạc dần biến thành rừng rậm,
Dialogue: 0,0:17:18.40,0:17:21.08,Default,yoshino,0000,0000,0000,,biển bị ô nhiễm cũng trở lại bình thường.
Dialogue: 0,0:17:21.64,0:17:22.72,Default,yoshino,0000,0000,0000,,Nhờ vậy,
Dialogue: 0,0:17:22.72,0:17:26.01,Default,yoshino,0000,0000,0000,,chúng ta đã giải quyết được vấn đề thiếu lương thực và cạn kiệt nguồn nước.
Dialogue: 0,0:17:26.54,0:17:27.81,Default,mahiro,0000,0000,0000,,Gì chứ...
Dialogue: 0,0:17:27.81,0:17:29.94,Default,mahiro,0000,0000,0000,,vậy là chúng ta còn phải cám ơn Khởi Nguyên Chi Mộc nữa à?
Dialogue: 0,0:17:30.48,0:17:33.28,Default,yoshino,0000,0000,0000,,Tuyệt Viên Chi Mộc cũng ngừng hoạt động từ đó.
Dialogue: 0,0:17:33.95,0:17:36.07,Default,yoshino,0000,0000,0000,,Không có thêm trái cây nào xuất hiện nữa.
Dialogue: 0,0:17:37.70,0:17:38.93,Default,mahiro,0000,0000,0000,,Thật khó chịu.
Dialogue: 0,0:17:38.93,0:17:39.41,Default,yoshino,0000,0000,0000,,Hở?
Dialogue: 0,0:17:39.74,0:17:41.90,Default,mahiro,0000,0000,0000,,Thế giới không cần tớ giúp cũng đã được cứu,
Dialogue: 0,0:17:41.90,0:17:44.06,Default,,0000,0000,0000,,nhưng công bằng cho tớ vẫn chưa được đòi lại.
Dialogue: 0,0:17:46.25,0:17:49.42,Default,yoshino,0000,0000,0000,,Vậy là cậu vẫn muốn dùng bi kịch để kết thúc bi kịch?
Dialogue: 0,0:17:50.38,0:17:52.88,Default,yoshino,0000,0000,0000,,Cậu sẽ không thỏa mãn một khi chưa báo được thù?
Dialogue: 0,0:17:54.19,0:17:55.35,Default,mahiro,0000,0000,0000,,Tớ...
Dialogue: 0,0:17:58.28,0:17:59.42,Default,mahiro,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:18:00.09,0:18:01.64,Default,mahiro,0000,0000,0000,,Mình phải tìm ra kẻ giết Aika...
Dialogue: 0,0:18:15.75,0:18:18.94,Default - italics,mahiro,0000,0000,0000,,Vậy là lại phải nghe Aika lảm nhảm nữa sao?
Dialogue: 0,0:18:46.13,0:18:47.52,Default,mahiro,0000,0000,0000,,Aika...
Dialogue: 0,0:18:50.06,0:18:53.45,Default,mahiro,0000,0000,0000,,Em đang làm cái quái gì... ở đây?
Dialogue: 0,0:18:58.34,0:19:00.11,Default - italics,mahiro,0000,0000,0000,,Ai mà tin nổi những gì đang hiện ra trước mắt?
Dialogue: 0,0:19:01.52,0:19:05.08,Default - italics,mahiro,0000,0000,0000,,Những đóa hoa đỏ tươi đang mọc lên từ cơ thể cô ấy.
Dialogue: 0,0:19:18.57,0:19:20.85,Default - italics,mahiro,0000,0000,0000,,Làn da của cô ấy không còn chút hơi ấm nào...
Dialogue: 0,0:19:21.80,0:19:26.21,Default - italics,mahiro,0000,0000,0000,,Thế nhưng, mình vẫn không thể tin được rằng Aika đã chết.
Dialogue: 0,0:19:28.12,0:19:29.02,Default - italics,mahiro,0000,0000,0000,,Tại sao?
Dialogue: 0,0:19:36.73,0:19:38.25,Default - italics,mahiro,0000,0000,0000,,Khi Aika còn sống,
Dialogue: 0,0:19:39.82,0:19:41.42,Default - italics,,0000,0000,0000,,mình đã không thể biết...
Dialogue: 0,0:19:41.93,0:19:47.93,Default - italics,mahiro,0000,0000,0000,,Sự mềm mại của làn da, hơi ấm của cô ấy.
Dialogue: 0,0:20:13.72,0:20:15.36,Default,samon,0000,0000,0000,,Cậu gặp ác mộng à?
Dialogue: 0,0:20:17.15,0:20:18.62,Default,mahiro,0000,0000,0000,,Samon hả?
Dialogue: 0,0:20:18.62,0:20:20.99,Default,,0000,0000,0000,,Anh là người cuối cùng tôi muốn gặp lúc thức dậy đấy.
Dialogue: 0,0:20:21.62,0:20:23.43,Default,samon,0000,0000,0000,,Vừa mới tỉnh lại đã nói thế à?
Dialogue: 0,0:20:26.00,0:20:27.61,Default,mahiro,0000,0000,0000,,Tôi ngủ bao lâu rồi?
Dialogue: 0,0:20:27.61,0:20:28.88,Default,samon,0000,0000,0000,,Khoảng 1 tháng.
Dialogue: 0,0:20:29.57,0:20:31.47,Default,samon,0000,0000,0000,,Tôi có thể đánh thức cậu sớm hơn,
Dialogue: 0,0:20:31.47,0:20:33.28,Default,,0000,0000,0000,,nhưng hết việc này tới việc khác xảy ra.
Dialogue: 0,0:20:33.67,0:20:36.71,Default,samon,0000,0000,0000,,Tôi đành dùng ma thuật để giữ cậu ở trạng thái ngủ.
Dialogue: 0,0:20:36.95,0:20:38.34,Default,samon,0000,0000,0000,,Đừng có trách tôi.
Dialogue: 0,0:20:46.79,0:20:48.18,Default,mahiro,0000,0000,0000,,Đó là Khởi Nguyên Chi Mộc?
Dialogue: 0,0:20:48.53,0:20:50.35,Default,samon,0000,0000,0000,,Ờ, một phần của nó.
Dialogue: 0,0:20:53.55,0:20:54.98,Default,samon,0000,0000,0000,,Không muốn hỏi gì à?
Dialogue: 0,0:20:56.62,0:20:58.38,Default,mahiro,0000,0000,0000,,Giống hệt như trong giấc mơ.
Dialogue: 0,0:20:59.48,0:21:01.67,Default,mahiro,0000,0000,0000,,Yoshino đâu? Yoshino vẫn an toàn chứ?!
Dialogue: 0,0:21:03.36,0:21:05.66,Default,samon,0000,0000,0000,,Cậu ta không ở đây, nhưng không cần phải lo.
Dialogue: 0,0:21:06.14,0:21:09.85,Default,samon,0000,0000,0000,,Cậu ta vẫn khỏe, mà thông minh hơn cậu nhiều.
Dialogue: 0,0:21:10.21,0:21:11.48,Default,mahiro,0000,0000,0000,,Thế à?
Dialogue: 0,0:21:13.87,0:21:16.79,Default,mahiro,0000,0000,0000,,Vậy tại sao vẫn còn giữ lại mạng của tôi?
Dialogue: 0,0:21:16.79,0:21:18.42,Default,,0000,0000,0000,,Anh muốn gì ở tôi?
Dialogue: 0,0:21:21.41,0:21:22.55,Default,samon,0000,0000,0000,,Fuwa Mahiro,
Dialogue: 0,0:21:23.05,0:21:26.82,Default,samon,0000,0000,0000,,cậu có thể giết Takigawa Yoshino không?
Dialogue: 0,0:23:02.19,0:23:03.90,Default,Forgot name,0000,0000,0000,,Được rồi, được rồi...
Dialogue: 0,0:23:05.50,0:23:06.86,Default,Forgot name,0000,0000,0000,,Ngừng lại.
Dialogue: 0,0:23:07.14,0:23:08.39,Default,Forgot name,0000,0000,0000,,Ok~desu.
Dialogue: 0,0:23:10.90,0:23:14.08,Default,Dude,0000,0000,0000,,Hanemura-san, tới giờ nghỉ trưa rồi!
Dialogue: 0,0:23:14.87,0:23:16.83,Default,Dude,0000,0000,0000,,Bị bạn gái đá á?!
Dialogue: 0,0:23:17.90,0:23:21.52,Default,Hanemura,0000,0000,0000,,Cô ấy nói cô ấy không thích loại người vô trách nhiệm, không có tương lai...
Dialogue: 0,0:23:23.93,0:23:25.30,Default,Dude,0000,0000,0000,,Cay nghiệt quá nhỉ.
Dialogue: 0,0:23:28.27,0:23:30.34,Default,Dude,0000,0000,0000,,À, có chuyện này...
Dialogue: 0,0:23:30.34,0:23:33.84,Default,,0000,0000,0000,,Cậu có nghe tin đồn về Tuyệt Viên Pháp Sư không?
Dialogue: 0,0:23:34.91,0:23:41.10,Default,Dude,0000,0000,0000,,Mọi người nói người đó có thể phá hủy cái cây kia và đưa mọi thứ trở lại như bình thường ấy...
Dialogue: 0,0:23:41.10,0:23:44.06,Default,Hanemura,0000,0000,0000,,À, chắc là họ nói về tôi đấy.
Dialogue: 0,0:23:44.06,0:23:45.56,Default,Dude,0000,0000,0000,,Hể...
Dialogue: 0,0:23:45.56,0:23:46.27,Default,Dude,0000,0000,0000,,Hả?
Dialogue: 0,0:23:50.60,0:23:52.53,Default,Hanemura,0000,0000,0000,,Nếu ra tay cứu thế giới,
Dialogue: 0,0:23:53.79,0:23:56.60,Default,,0000,0000,0000,,tương lai tôi nó có khá khẩm hơn không?
Dialogue: 0,0:24:02.21,0:24:04.16,Default,Mahiro,0000,0000,0000,,Hakaze thích Yoshino á?!
Dialogue: 0,0:24:04.16,0:24:07.25,Default,Hakaze,0000,0000,0000,,Mà hình như cậu ta có bạn gái rồi mà!
Dialogue: 0,0:24:07.25,0:24:12.22,Default,Samon,0000,0000,0000,,Tất cả những gì công chúa nghĩ hiện giờ chỉ toàn xoay quanh Takigawa Yoshino.
Dialogue: 0,0:24:12.22,0:24:13.68,Default,Who,0000,0000,0000,,Đâu phải chuyện của mình chứ?!
Dialogue: 0,0:24:14.50,0:24:15.60,Default,mahiro,0000,0000,0000,,Nghĩa là...
Dialogue: 0,0:24:15.60,0:24:19.49,Default,Samon,0000,0000,0000,,Takigawa Yoshino có thể chính là Tuyệt Viên Pháp Sư.
Dialogue: 0,0:24:19.73,0:24:22.05,Default,Hakaze,0000,0000,0000,,Cậu nhận ra mình có năng lực này từ bao giờ?
Dialogue: 0,0:24:22.05,0:24:23.97,Default,Guy,0000,0000,0000,,Đâu còn cách nào khác...
Dialogue: 0,0:24:23.97,0:24:26.97,Title2E13,sIGN,0000,0000,0000,,Tập 14 \NChúc mừng năm mới
Dialogue: 0,0:21:37.59,0:21:42.05,Vie ED,,0000,0000,0000,,Giai điệu mà đôi ta ngân lên
Dialogue: 0,0:21:42.05,0:21:46.38,Vie ED,,0000,0000,0000,,chúng hòa nhịp cùng nhau
Dialogue: 0,0:21:46.39,0:21:50.64,Vie ED,,0000,0000,0000,,Có thể đó là chuyện rất đỗi bình thường
Dialogue: 0,0:21:50.64,0:21:56.81,Vie ED,,0000,0000,0000,,Nhưng sao tâm trí anh vẫn cứ thấy điều đó thật đặc biệt
Dialogue: 0,0:21:57.48,0:22:01.73,Vie ED,,0000,0000,0000,,Những lúc tâm trạng rối bời
Dialogue: 0,0:22:01.73,0:22:06.53,Vie ED,,0000,0000,0000,,Anh lại tìm về những điều ấy
Dialogue: 0,0:22:06.53,0:22:10.28,Vie ED,,0000,0000,0000,,Như thể có tồn tại một sợi tơ vô hình
Dialogue: 0,0:22:10.28,0:22:15.72,Vie ED,,0000,0000,0000,,kết nối tình duyên nồng thắm giữa anh và em
Dialogue: 0,0:22:17.04,0:22:21.42,Vie ED,,0000,0000,0000,,Dẫu cho người khác có cười nhạo
Dialogue: 0,0:22:21.42,0:22:25.67,Vie ED,,0000,0000,0000,,Niềm tin mạnh mẽ trong anh vẫn không thay đổi
Dialogue: 0,0:22:25.67,0:22:31.43,Vie ED,,0000,0000,0000,,Nên đến tận bây giờ, anh vẫn mãi nguyện cầu
Dialogue: 0,0:22:31.43,0:22:34.35,Vie ED,,0000,0000,0000,,về một tương lai mà đôi ta được bên nhau
Dialogue: 0,0:22:34.35,0:22:38.56,Vie ED,,0000,0000,0000,,Anh vẫn tiếp tục tiến bước
Dialogue: 0,0:22:38.56,0:22:42.57,Vie ED,,0000,0000,0000,,Bởi anh tin rằng mình không đơn độc
Dialogue: 0,0:22:42.57,0:22:49.78,Vie ED,,0000,0000,0000,,Một ngày nào đó, anh có thể nói với em rằng "Này em, định mệnh đấy"
Dialogue: 0,0:22:50.28,0:22:56.43,Vie ED,,0000,0000,0000,,Và chúng ta có thể vui đùa bên nhau thỏa thích
