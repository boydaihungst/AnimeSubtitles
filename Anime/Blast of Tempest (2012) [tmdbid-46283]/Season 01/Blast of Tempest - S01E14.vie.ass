Dialogue: 0,0:00:00.87,0:00:06.88,Viet OP,,0000,0000,0000,,Không thể, không thể cất lên lời giã biệt
Dialogue: 0,0:00:06.88,0:00:12.74,Viet OP,,0000,0000,0000,,Em vẫn còn yêu anh lắm mà
Dialogue: 0,0:00:19.98,0:00:24.23,Viet OP,,0000,0000,0000,,Khi ta rời xa nhau
Dialogue: 0,0:00:24.23,0:00:31.65,Viet OP,,0000,0000,0000,,Giọng nói của anh lúc ấy cứ vang vọng trong đầu em
Dialogue: 0,0:00:32.36,0:00:36.45,Viet OP,,0000,0000,0000,,Một màu trắng phủ đầy tâm trí
Dialogue: 0,0:00:36.45,0:00:43.20,Viet OP,,0000,0000,0000,,Như có một xung điện chạy trong cơ thể em
Dialogue: 0,0:00:44.21,0:00:49.80,Viet OP,,0000,0000,0000,,Lẽ nào em thật sự phải quên anh đi
Dialogue: 0,0:00:49.80,0:00:55.88,Viet OP,,0000,0000,0000,,để có thể bước tiếp trên con đường đời?
Dialogue: 0,0:00:56.13,0:01:01.93,Viet OP,,0000,0000,0000,,Không sao hiểu được, em chỉ còn biết khóc lên thật to
Dialogue: 0,0:01:02.32,0:01:08.44,Viet OP,,0000,0000,0000,,Em quyết sẽ tiếp tục sống
Dialogue: 0,0:01:08.44,0:01:14.32,Viet OP,,0000,0000,0000,,với chính cách sống mình đã chọn trước đây
Dialogue: 0,0:01:14.57,0:01:20.45,Viet OP,,0000,0000,0000,,Không thể, không thể cất lên lời giã biệt
Dialogue: 0,0:01:20.75,0:01:27.17,Viet OP,,0000,0000,0000,,Em vẫn còn yêu anh lắm mà
Dialogue: 0,0:22:35.65,0:22:40.11,Vie ED,,0000,0000,0000,,Giai điệu mà đôi ta ngân lên
Dialogue: 0,0:22:40.11,0:22:44.44,Vie ED,,0000,0000,0000,,chúng hòa nhịp cùng nhau
Dialogue: 0,0:22:44.45,0:22:48.70,Vie ED,,0000,0000,0000,,Có thể đó là chuyện rất đỗi bình thường
Dialogue: 0,0:22:48.70,0:22:54.87,Vie ED,,0000,0000,0000,,Nhưng sao tâm trí anh vẫn cứ thấy điều đó thật đặc biệt
Dialogue: 0,0:22:55.54,0:22:59.79,Vie ED,,0000,0000,0000,,Những lúc tâm trạng rối bời
Dialogue: 0,0:22:59.79,0:23:04.59,Vie ED,,0000,0000,0000,,Anh lại tìm về những điều ấy
Dialogue: 0,0:23:04.59,0:23:08.34,Vie ED,,0000,0000,0000,,Như thể có tồn tại một sợi tơ vô hình
Dialogue: 0,0:23:08.34,0:23:13.78,Vie ED,,0000,0000,0000,,kết nối tình duyên nồng thắm giữa anh và em
Dialogue: 0,0:23:15.10,0:23:19.48,Vie ED,,0000,0000,0000,,Dẫu cho người khác có cười nhạo
Dialogue: 0,0:23:19.48,0:23:23.73,Vie ED,,0000,0000,0000,,Niềm tin mạnh mẽ trong anh vẫn không thay đổi
Dialogue: 0,0:23:23.73,0:23:29.49,Vie ED,,0000,0000,0000,,Nên đến tận bây giờ, anh vẫn mãi nguyện cầu
Dialogue: 0,0:23:29.49,0:23:32.41,Vie ED,,0000,0000,0000,,về một tương lai mà đôi ta được bên nhau
Dialogue: 0,0:23:32.41,0:23:36.62,Vie ED,,0000,0000,0000,,Anh vẫn tiếp tục tiến bước
Dialogue: 0,0:23:36.62,0:23:40.63,Vie ED,,0000,0000,0000,,Bởi anh tin rằng mình không đơn độc
Dialogue: 0,0:23:40.63,0:23:47.84,Vie ED,,0000,0000,0000,,Một ngày nào đó, anh có thể nói với em rằng "Này em, định mệnh đấy"
Dialogue: 0,0:23:47.84,0:23:54.49,Vie ED,,0000,0000,0000,,{\fad(0,500)}Và chúng ta có thể vui đùa bên nhau thỏa thích
Dialogue: 0,0:01:31.97,0:01:33.19,Default,samon,0000,0000,0000,,Fuwa Mahiro,
Dialogue: 0,0:01:33.19,0:01:35.94,Default,samon,0000,0000,0000,,cậu có thể giết Takigawa Yoshino không?
Dialogue: 0,0:01:40.17,0:01:41.68,Default,mahiro,0000,0000,0000,,Gì chứ hả?
Dialogue: 0,0:01:41.68,0:01:43.54,Default,mahiro,0000,0000,0000,,Trò đùa đó không vui đâu.
Dialogue: 0,0:01:44.11,0:01:46.16,Default,samon,0000,0000,0000,,Tôi hiếm khi đùa lắm.
Dialogue: 0,0:01:47.48,0:01:50.25,Default,samon,0000,0000,0000,,Thôi, để tôi giải thích lại từ đầu.
Dialogue: 0,0:01:50.75,0:01:51.78,Default,samon,0000,0000,0000,,Trước tiên cậu hãy cứ thay đồ đã.
Dialogue: 0,0:01:57.16,0:01:58.38,Default,samon,0000,0000,0000,,Không phải lo.
Dialogue: 0,0:01:58.77,0:02:00.41,Default,samon,0000,0000,0000,,Tôi đã chữa lành vết thương cho cậu.
Dialogue: 0,0:02:00.84,0:02:03.39,Default,samon,0000,0000,0000,,Các vết thương cũ hay xương bị gãy cũng đã lành lại cả.
Dialogue: 0,0:02:04.37,0:02:07.10,Default,mahiro,0000,0000,0000,,Vậy hôm nay là bao nhiêu rồi?
Dialogue: 0,0:02:07.95,0:02:09.85,Default,samon,0000,0000,0000,,Mồng 1 tháng 1.
Dialogue: 0,0:02:09.85,0:02:12.86,Title,sign,0000,0000,0000,,Tập 14 \NChúc mừng năm mới
Dialogue: 0,0:02:10.58,0:02:12.09,Default,samon,0000,0000,0000,,Chúc mừng năm mới.
Dialogue: 0,0:02:15.26,0:02:19.24,Default,yoshino,0000,0000,0000,,Có lẽ chúng ta là những người duy nhất đi viếng mộ ngày mồng 1 tết.
Dialogue: 0,0:02:20.39,0:02:21.49,Default,hakaze,0000,0000,0000,,Đã 2 năm rồi...
Dialogue: 0,0:02:23.69,0:02:26.63,Default,hakaze,0000,0000,0000,,Cái năm mới mà đáng lẽ ra tôi không được hưởng.
Dialogue: 0,0:02:27.08,0:02:31.97,Default,hakaze,0000,0000,0000,,Theo lí thì tôi phải chết trên đảo hoang từ 2 năm trước rồi.
Dialogue: 0,0:02:32.84,0:02:34.57,Default,yoshino,0000,0000,0000,,Nói vậy cũng đúng.
Dialogue: 0,0:02:36.42,0:02:37.64,Default,hakaze,0000,0000,0000,,Tất cả là nhờ cậu đấy.
Dialogue: 0,0:02:37.64,0:02:38.35,Default,yoshino,0000,0000,0000,,Ơ?
Dialogue: 0,0:02:38.35,0:02:41.27,Default,hakaze,0000,0000,0000,,À không... Nhờ cả Mahiro nữa.
Dialogue: 0,0:02:43.78,0:02:46.48,Default,samon,0000,0000,0000,,Công chúa đang du hành khắp nơi
Dialogue: 0,0:02:46.48,0:02:51.40,Default,samon,0000,0000,0000,,để tận mắt chứng kiến Khởi Nguyên Chi Mộc\N đã thay đổi thế giới như thế nào.
Dialogue: 0,0:02:51.89,0:02:53.79,Default,mahiro,0000,0000,0000,,Nhưng sao Yoshino lại đi cùng?
Dialogue: 0,0:02:53.79,0:02:58.51,Default,samon,0000,0000,0000,,Người duy nhất được công chúa cho phép\N đi cùng là Takigawa Yoshino.
Dialogue: 0,0:02:59.46,0:03:01.41,Default,mahiro,0000,0000,0000,,Xem bộ cô ta thích hắn rồi.
Dialogue: 0,0:03:01.80,0:03:02.73,Default,samon,0000,0000,0000,,Nhưng mà,
Dialogue: 0,0:03:02.73,0:03:05.20,Default,samon,0000,0000,0000,,mọi chuyện cũng vì vậy mà bắt đầu trở nên nghiêm trọng.
Dialogue: 0,0:03:07.71,0:03:09.12,Default,eva,0000,0000,0000,,Chúng tôi chờ nãy giờ rồi đấy!
Dialogue: 0,0:03:09.65,0:03:11.53,Default,eva,0000,0000,0000,,Nào, ngồi đi.
Dialogue: 0,0:03:16.09,0:03:17.93,Default,mahiro,0000,0000,0000,,Tụ họp vui vẻ gớm.
Dialogue: 0,0:03:18.28,0:03:20.95,Default,samon,0000,0000,0000,,Nếu không có lệnh của tôi thì cậu ta là một người rất quy củ.
Dialogue: 0,0:03:20.95,0:03:22.45,Default,mahiro,0000,0000,0000,,Tất nhiên rồi.
Dialogue: 0,0:03:22.45,0:03:25.37,Default,,0000,0000,0000,,Anh ta mà vung vẩy cây thương khắp nơi thì phiền phức to đấy.
Dialogue: 0,0:03:28.40,0:03:31.81,Default,samon,0000,0000,0000,,Chắc cậu cũng đói rồi.\N Cứ ăn thoải mái đi.
Dialogue: 0,0:03:33.42,0:03:35.27,Default,mahiro,0000,0000,0000,,Tất cả mọi người ở đây đều dính dáng tới ma thuật chứ?
Dialogue: 0,0:03:37.00,0:03:39.05,Default,eva,0000,0000,0000,,Ô, đúng là hai người chưa gặp nhau bao giờ nhỉ.
Dialogue: 0,0:03:39.05,0:03:40.52,Default,forgot,0000,0000,0000,,Cậu chưa gặp tôi,
Dialogue: 0,0:03:40.87,0:03:42.62,Default,forgot,0000,0000,0000,,nhưng tôi đã từng thấy cậu.
Dialogue: 0,0:03:43.11,0:03:46.90,Default,forgot,0000,0000,0000,,Nhưng chỉ là qua màn hình, khi cậu đang trên đường tới núi Phú Sĩ.
Dialogue: 0,0:03:49.06,0:03:50.37,Default,eva,0000,0000,0000,,Hayakawa Takumi,
Dialogue: 0,0:03:50.37,0:03:52.83,Default,,0000,0000,0000,,Phó Chỉ Huy Lực Lượng Phòng Chống Hắc Thiết Dịch.
Dialogue: 0,0:03:52.83,0:03:54.08,Default,eva,0000,0000,0000,,Ít ra là đã từng như vậy.
Dialogue: 0,0:03:54.46,0:03:55.96,Default,mahiro,0000,0000,0000,,Đã từng à?
Dialogue: 0,0:03:55.96,0:03:59.42,Default,haya,0000,0000,0000,,Từ sau lần thất bại đó, tôi đã bị tước toàn bộ quyền chỉ huy.
Dialogue: 0,0:03:59.84,0:04:04.55,Default,haya,0000,0000,0000,,Dù bất tỉnh giữa chừng nhưng chắc cậu cũng đoán được cuộc tập kích đã thất bại.
Dialogue: 0,0:04:04.91,0:04:09.69,Default,eva,0000,0000,0000,,Giờ anh ta chỉ là người làm báo cáo thống kê những thiệt hại gây ra bởi Hắc Thiết Dịch.
Dialogue: 0,0:04:09.69,0:04:14.56,Default,eva,0000,0000,0000,,Vậy nên tất cả những gì có thể làm bây giờ là đi tuyên truyền tin đồn về Tuyệt Viên Pháp Sư trên mạng.
Dialogue: 0,0:04:15.63,0:04:17.90,Default,mahiro,0000,0000,0000,,Tuyệt Viên Pháp Sư?
Dialogue: 0,0:04:18.54,0:04:20.55,Default,mahiro,0000,0000,0000,,Gã đó có thật sự tồn tại không?
Dialogue: 0,0:04:20.55,0:04:22.81,Default,samon,0000,0000,0000,,Chúng tôi phát tán tin đồn cũng vì muốn biết điều đó.
Dialogue: 0,0:04:23.31,0:04:28.16,Default,samon,0000,0000,0000,,Nếu thật sự tồn tại kẻ đó, chúng ta phải tìm ra hắn trước khi có chuyện rắc rối xảy ra.
Dialogue: 0,0:04:28.55,0:04:30.67,Default,samon,0000,0000,0000,,Cần phải đưa hắn vào trong tầm kiểm soát.
Dialogue: 0,0:04:35.69,0:04:39.15,Default - italics,hane,0000,0000,0000,,Sao lại từ chối tin nhắn của anh chứ, Yu-chan...
Dialogue: 0,0:04:45.02,0:04:49.43,Default - italics,hane,0000,0000,0000,,Khi cái cây đó xuất hiện, đã có rất nhiều người bị hại.
Dialogue: 0,0:04:49.97,0:04:52.81,Default - italics,hane,0000,0000,0000,,Nhưng cũng phải công nhận thế giới đã trở nên yên bình hơn rất nhiều.
Dialogue: 0,0:04:54.37,0:04:57.27,Default - italics,hane,0000,0000,0000,,Cũng có rất nhiều tín đồ thờ cúng thần mộc,
Dialogue: 0,0:05:01.39,0:05:06.06,Default - italics,hane,0000,0000,0000,,cũng có những tin đồn liên quan tới sự tồn tại của Tuyệt Viên Pháp Sư
Dialogue: 0,0:05:06.06,0:05:10.69,Default - italics,hane,0000,0000,0000,,người có khả năng tiêu diệt thần mộc,\N đưa thế giới trở lại như cũ.
Dialogue: 0,0:05:11.99,0:05:13.95,Default - italics,hane,0000,0000,0000,,Có lẽ mọi người đều nhận ra
Dialogue: 0,0:05:14.86,0:05:18.04,Default - italics,hane,0000,0000,0000,,chúng ta thực chất đang bị thần mộc cai trị.
Dialogue: 0,0:05:22.68,0:05:23.87,Default - italics,yoshino,0000,0000,0000,,Aika-chan,
Dialogue: 0,0:05:24.44,0:05:27.32,Default - italics,yoshino,0000,0000,0000,,đây vốn là cuộc hành trình đi tìm hung thủ sát hại em.
Dialogue: 0,0:05:28.09,0:05:31.14,Default - italics,yoshino,0000,0000,0000,,Nhưng giờ nó đã trở thành một mớ hỗn độn.
Dialogue: 0,0:05:31.56,0:05:34.09,Default - italics,yoshino,0000,0000,0000,,Thế giới đã thay đổi rất nhiều.
Dialogue: 0,0:05:34.66,0:05:35.52,Default,hakaze,0000,0000,0000,,Yoshino...
Dialogue: 0,0:05:36.14,0:05:38.72,Default,hakaze,0000,0000,0000,,Fuwa Aika là người như thế nào?
Dialogue: 0,0:05:40.38,0:05:41.76,Default,yoshino,0000,0000,0000,,À...
Dialogue: 0,0:05:41.76,0:05:44.95,Default,yoshino,0000,0000,0000,,Thì là em gái Mahiro, nên...
Dialogue: 0,0:05:45.48,0:05:48.48,Default,hakaze,0000,0000,0000,,Tức là một cô gái xấu tính phải không?
Dialogue: 0,0:05:49.28,0:05:50.66,Default,yoshino,0000,0000,0000,,Có lẽ vậy.
Dialogue: 0,0:05:53.38,0:05:53.99,Default,hakaze,0000,0000,0000,,Yoshino.
Dialogue: 0,0:05:56.36,0:05:59.83,Default,hakaze,0000,0000,0000,,Giới thiệu cho tôi bạn trai của Aika nhé.
Dialogue: 0,0:05:59.83,0:06:00.64,Default,yoshino,0000,0000,0000,,Ơ?
Dialogue: 0,0:06:01.01,0:06:06.17,Default,hakaze,0000,0000,0000,,Dám cả gan bí mật hẹn hò em gái Mahiro,\N đó phải là một tên ngốc không biết trời đất là gì.
Dialogue: 0,0:06:06.72,0:06:08.18,Default,hakaze,0000,0000,0000,,Tôi rất muốn được gặp hắn.
Dialogue: 0,0:06:08.59,0:06:12.01,Default - italics,yoshino,0000,0000,0000,,Tên ngốc không biết trời đất là gì đó đang đứng đây nè.
Dialogue: 0,0:06:12.39,0:06:16.08,Default,hakaze,0000,0000,0000,,Fuwa Aika, một lần nữa xin hãy chấp nhận lời tạ lỗi của tôi.
Dialogue: 0,0:06:16.94,0:06:20.85,Default,hakaze,0000,0000,0000,,Rất có thể chính tôi là người đã gây ra cái chết của cô.
Dialogue: 0,0:06:22.01,0:06:22.82,Default,hakaze,0000,0000,0000,,Không.
Dialogue: 0,0:06:23.64,0:06:28.07,Default,hakaze,0000,0000,0000,,Đã có biết bao sinh mạng mất đi vì tôi rồi...
Dialogue: 0,0:06:34.61,0:06:39.17,Default - italics,hane,0000,0000,0000,,Tuyệt Viên Chi Mộc từng xuất hiện trên đỉnh núi Phú Sĩ...
Dialogue: 0,0:06:39.17,0:06:42.68,Default - italics,hane,0000,0000,0000,,Nếu có thể phục sinh lại nó, thế giới sẽ trở lại như cũ.
Dialogue: 0,0:06:46.71,0:06:48.55,Default - italics,hane,0000,0000,0000,,Liệu mình có thể làm được không...
Dialogue: 0,0:06:49.49,0:06:51.31,Default - italics,hane,0000,0000,0000,,Mà nếu có thể,
Dialogue: 0,0:06:51.31,0:06:53.90,Default - italics,hane,0000,0000,0000,,không chừng bạn gái mình sẽ quay trở lại!
Dialogue: 0,0:06:56.74,0:06:58.81,Default,hakaze,0000,0000,0000,,Vậy ra đây là thành phố cậu sống...
Dialogue: 0,0:06:59.23,0:07:00.59,Default,yoshino,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:07:01.00,0:07:03.10,Default,hakaze,0000,0000,0000,,Chắc là nơi này lưu giữ rất nhiều kỉ niệm.
Dialogue: 0,0:07:03.58,0:07:06.26,Default,yoshino,0000,0000,0000,,Buồn nhiều hơn là vui.
Dialogue: 0,0:07:10.12,0:07:15.58,Default - italics,yoshino,0000,0000,0000,,Lúc này, có lẽ chính Hakaze-san mới là người sợ hãi sức mạnh của Khởi Nguyên Chi Mộc hơn bất cứ ai.
Dialogue: 0,0:07:16.59,0:07:20.37,Default - italics,yoshino,0000,0000,0000,,Tôi được kể lại rằng, sau khi tôi bất tỉnh,
Dialogue: 0,0:07:20.37,0:07:24.08,Default - italics,,0000,0000,0000,,Hakaze-san đã áp chế Tuyệt Viên Chi Mộc, ngăn chặn Khởi Nguyên Chi Mộc.
Dialogue: 0,0:07:27.82,0:07:29.82,Default,yoshino,0000,0000,0000,,Đây không phải lỗi của Hakaze-san.
Dialogue: 0,0:07:30.30,0:07:33.74,Default,yoshino,0000,0000,0000,,Chẳng ai đoán được những chuyện thế này lại có thể xảy ra.
Dialogue: 0,0:07:34.49,0:07:38.67,Default,hakaze,0000,0000,0000,,Lúc đó cậu vẫn đang bất tỉnh nên mới không biết,
Dialogue: 0,0:07:38.67,0:07:39.98,Default,hakaze,0000,0000,0000,,chỉ mất có 7 ngày...
Dialogue: 0,0:07:40.57,0:07:43.43,Default,hakaze,0000,0000,0000,,Chỉ còn những tàn tích sót lại,
Dialogue: 0,0:07:43.43,0:07:46.73,Default,hakaze,0000,0000,0000,,phần lớn thế giới đã trở lại như bình thường chỉ trong 1 tuần.
Dialogue: 0,0:07:47.44,0:07:51.73,Default,hakaze,0000,0000,0000,,Những sinh vật bị thiết hóa đã bị Khởi Nguyên Chi Mộc hấp thụ và tan biến.
Dialogue: 0,0:07:51.73,0:07:54.96,Default,hakaze,0000,0000,0000,,Phần lớn những vấn đề xã hội cũng không còn.
Dialogue: 0,0:07:55.67,0:07:57.84,Default,hakase,0000,0000,0000,,Thế nhưng, thứ tôi thực sự lo sợ là...
Dialogue: 0,0:07:58.86,0:08:02.31,Default,hakaze,0000,0000,0000,,Tôi đã quá coi thường quyền năng của Khởi Nguyên Chi Mộc.
Dialogue: 0,0:08:02.79,0:08:06.72,Default,hakaze,0000,0000,0000,,Chỉ một phần của thần mộc được thức tỉnh mà đã thế này,
Dialogue: 0,0:08:07.26,0:08:09.46,Default,hakaze,0000,0000,0000,,thì chuyện gì sẽ xảy ra khi nó thức tỉnh hoàn toàn?
Dialogue: 0,0:08:09.87,0:08:14.78,Default,yoshino,0000,0000,0000,,Nhưng mới thức tỉnh một phần cũng không có nghĩa là sẽ có thêm nhiều nạn nhân nữa mà.{Chỗ này đéo hiểu nó muốn nói gì @_@}
Dialogue: 0,0:08:14.78,0:08:15.93,Default,hakaze,0000,0000,0000,,Đúng vậy...
Dialogue: 0,0:08:16.76,0:08:20.98,Default,hakaze,0000,0000,0000,,Nhưng càng chứng kiến những chuyện này, tôi càng không biết đâu là đúng, đâu là sai.
Dialogue: 0,0:08:21.43,0:08:25.98,Default,hakaze,0000,0000,0000,,Gia đình cậu, bạn bè cậu, tất cả đều biến mất...
Dialogue: 0,0:08:26.58,0:08:28.23,Default,hakaze,0000,0000,0000,,Và không chừng sẽ còn nhiều hơn nữa...
Dialogue: 0,0:08:31.87,0:08:33.26,Default,yoshino,0000,0000,0000,,Chúng ta đi thôi.
Dialogue: 0,0:08:35.57,0:08:39.07,Default,yoshino,0000,0000,0000,,Năm mới mà, hãy đi ăn thứ gì đó thật ngon.
Dialogue: 0,0:08:41.06,0:08:42.91,Default,mahiro,0000,0000,0000,,Hakaze thích Yoshino á?!
Dialogue: 0,0:08:43.39,0:08:48.31,Default,samon,0000,0000,0000,,Nhưng mà chính công chúa cũng không nhận ra tình cảm của bản thân.
Dialogue: 0,0:08:49.34,0:08:52.55,Default,samon,0000,0000,0000,,Trông ngổ ngáo vậy chứ thật ra công chúa ngây thơ lắm.
Dialogue: 0,0:08:53.35,0:08:55.84,Default,samon,0000,0000,0000,,Công chúa được bảo vệ bởi Khởi Nguyên Chi Mộc...
Dialogue: 0,0:08:56.38,0:09:03.27,Default,samon,0000,0000,0000,,Vậy nên những trải nghiệm ở núi Phú Sĩ là lần đầu tiên cô ấy cảm nhận được sự khó khăn.
Dialogue: 0,0:09:03.60,0:09:06.80,Default,mahiro,0000,0000,0000,,Thì là do anh gây ra chứ gì nữa.
Dialogue: 0,0:09:06.80,0:09:09.77,Default,samon,0000,0000,0000,,Và người cứu giúp cô ấy lúc đó là Takigawa Yoshino.
Dialogue: 0,0:09:09.77,0:09:11.23,Default,mahiro,0000,0000,0000,,Lại lờ đi à.
Dialogue: 0,0:09:12.87,0:09:18.53,Default,samon,0000,0000,0000,,Khi công chúa rơi vào tuyệt vọng,\Nchính cậu ta đã tìm ra cách cứu cô ấy.
Dialogue: 0,0:09:18.97,0:09:23.18,Default,samon,0000,0000,0000,,Đó là lần đầu tiên công chúa có một người con trai làm chỗ dựa.
Dialogue: 0,0:09:23.18,0:09:24.66,Default,samon,0000,0000,0000,,Không đổ mới lạ đấy.
Dialogue: 0,0:09:24.96,0:09:29.63,Default,mahiro,0000,0000,0000,,Nhưng mà sao mấy chuyện này lại thành nguyên nhân để ta phải giết Yoshino?
Dialogue: 0,0:09:30.34,0:09:31.15,Default,hakaze,0000,0000,0000,,Yoshino...
Dialogue: 0,0:09:31.97,0:09:36.18,Default,hakaze,0000,0000,0000,,Chuyến du hành này của chúng ta còn một mục đích khác.
Dialogue: 0,0:09:36.55,0:09:42.43,Default,hakaze,0000,0000,0000,,Tuyệt Viên Chi Mộc muốn phục sinh hoàn toàn thì phải hấp thụ toàn bộ những trái cây còn sót lại.
Dialogue: 0,0:09:42.88,0:09:46.74,Default,hakaze,0000,0000,0000,,Vậy nên chúng ta cần phải tìm ra chúng.
Dialogue: 0,0:09:47.60,0:09:48.69,Default,yoshino,0000,0000,0000,,Hakaze-san...
Dialogue: 0,0:09:50.12,0:09:51.71,Default,hakaze,0000,0000,0000,,Để đề phòng thôi.
Dialogue: 0,0:09:52.51,0:09:54.69,Default,samon,0000,0000,0000,,Công chúa đang bối rối.
Dialogue: 0,0:09:57.43,0:09:59.11,Default,samon,0000,0000,0000,,Cô ấy sợ hãi sức mạnh của chính mình,
Dialogue: 0,0:09:59.43,0:10:02.09,Default,samon,0000,0000,0000,,và không biết phải làm những gì.
Dialogue: 0,0:10:02.09,0:10:05.62,Default,mahiro,0000,0000,0000,,Anh muốn nói ý kiến của Yoshino sẽ tác động trực tiếp tới cô ấy phải không?
Dialogue: 0,0:10:06.69,0:10:08.63,Default,samon,0000,0000,0000,,Tôi dám chắc cậu ta có thể thay đổi lựa chọn của công chúa...
Dialogue: 0,0:10:09.38,0:10:14.59,Default,samon,0000,0000,0000,,Nếu Takigawa Yoshino nói Khởi Nguyên Chi Mộc nên được hồi sinh thì có thể công chúa sẽ làm vậy.
Dialogue: 0,0:10:15.19,0:10:17.47,Default,samon,0000,0000,0000,,Và nếu cậu ta nói không nên thì chắc cô ấy cũng đồng ý.
Dialogue: 0,0:10:18.03,0:10:19.59,Default,mahiro,0000,0000,0000,,Làm tất cả vì người mình yêu hả?
Dialogue: 0,0:10:20.11,0:10:22.86,Default,samon,0000,0000,0000,,Vậy có khác gì để người khác đánh cắp trái tim mình đâu?
Dialogue: 0,0:10:23.46,0:10:28.53,Default,samon,0000,0000,0000,,Tóm lại hiện giờ mọi quyết định của công chúa đều liên quan tới Takigawa Yoshino.
Dialogue: 0,0:10:29.25,0:10:30.06,Default,mahiro,0000,0000,0000,,Nghĩa là...
Dialogue: 0,0:10:31.76,0:10:36.21,Default,mahiro,0000,0000,0000,,Vận mệnh của thế giới giờ lại nằm trong tay Yoshino rồi.
Dialogue: 0,0:10:41.87,0:10:44.16,Default,hakaze,0000,0000,0000,,Yoshino, đợi chút nhé.
Dialogue: 0,0:10:44.16,0:10:44.82,Default,yoshino,0000,0000,0000,,Vâng.
Dialogue: 0,0:10:46.54,0:10:47.48,Default,hane,0000,0000,0000,,Xin lỗi.
Dialogue: 0,0:10:49.26,0:10:50.78,Default,hane,0000,0000,0000,,Cho tôi hỏi một chút được chứ?
Dialogue: 0,0:10:54.86,0:10:56.42,Default - italics,hakaze,0000,0000,0000,,Dở quá...
Dialogue: 0,0:10:56.92,0:11:00.44,Default - italics,hakaze,0000,0000,0000,,Trước mặt Yoshino mà mình lại cư xử yếu đuối như vậy.
Dialogue: 0,0:11:01.18,0:11:04.81,Default - italics,hakaze,0000,0000,0000,,Mà Yoshino cần gì phải răm rắp nghe theo mình như vậy chứ!
Dialogue: 0,0:11:05.34,0:11:10.01,Default - italics,hakaze,0000,0000,0000,,Cũng phải công nhận một điều là cho tới giờ mình vẫn lôi cậu ta...
Dialogue: 0,0:11:10.61,0:11:12.81,Default - italics,hakaze,0000,0000,0000,,Không, lỗi là của Yoshino chứ.
Dialogue: 0,0:11:13.10,0:11:15.12,Default - italics,hakaze,0000,0000,0000,,Cậu ta tốt bụng quá mức!
Dialogue: 0,0:11:15.12,0:11:17.45,Default - italics,hakaze,0000,0000,0000,,Nếu không muốn thì phải từ chối chứ.
Dialogue: 0,0:11:17.45,0:11:22.07,Default - italics,hakaze,0000,0000,0000,,Chính vì cái tính đó nên cậu ta mới để mình và Mahiro lôi kéo vào hết chuyện này tới chuyện khác.
Dialogue: 0,0:11:22.07,0:11:25.53,Default - italics,hakaze,0000,0000,0000,,Mà chẳng phải cậu ta có bạn gái rồi sao?
Dialogue: 0,0:11:25.53,0:11:28.18,Default - italics,hakaze,0000,0000,0000,,Không nên theo mình đi khắp nơi như vậy chứ!
Dialogue: 0,0:11:28.18,0:11:30.39,Default - italics,hakaze,0000,0000,0000,,Có bị đá thì cũng đừng trách... Đồ lăng nhăng.
Dialogue: 0,0:11:32.08,0:11:33.04,Default - italics,hakaze,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:11:33.71,0:11:38.25,Default - italics,hakaze,0000,0000,0000,,Yoshino tốt như vậy, chắc bạn gái cậu ấy cũng tuyệt vời lắm...
Dialogue: 0,0:11:42.16,0:11:43.97,Default - italics,hakaze,0000,0000,0000,,Ai quan tâm chứ?!
Dialogue: 0,0:11:46.69,0:11:48.39,Default,hane,0000,0000,0000,,Tôi biết đường đi, nhưng mà...
Dialogue: 0,0:11:48.39,0:11:51.15,Default,yoshino,0000,0000,0000,,Nhưng tôi không nghĩ chuyến tàu đó còn chạy.
Dialogue: 0,0:11:52.65,0:11:53.95,Default,hane,0000,0000,0000,,Vậy sao...
Dialogue: 0,0:11:53.95,0:11:54.73,Default,yoshino,0000,0000,0000,,Vâng.
Dialogue: 0,0:11:59.97,0:12:01.74,Default,hakaze,0000,0000,0000,,Gã đó là ai thế?
Dialogue: 0,0:12:01.74,0:12:03.11,Default,yoshino,0000,0000,0000,,Ai á?
Dialogue: 0,0:12:03.46,0:12:05.03,Default,,0000,0000,0000,,Cô đá mà không cần biết cậu ta là ai sao?
Dialogue: 0,0:12:05.04,0:12:06.62,Default,hane,0000,0000,0000,,T-Tại sao chứ?
Dialogue: 0,0:12:05.53,0:12:06.30,Default,hakaze,0000,0000,0000,,Ờ.
Dialogue: 0,0:12:06.95,0:12:09.21,Default,hakaze,0000,0000,0000,,Tôi thấy khó chịu.
Dialogue: 0,0:12:09.21,0:12:10.36,Default,hakaze,0000,0000,0000,,Không được à?
Dialogue: 0,0:12:11.80,0:12:13.33,Default,yoshino,0000,0000,0000,,Đành vậy, đâu còn cách nào...
Dialogue: 0,0:12:13.99,0:12:16.09,Default - italics,hane,0000,0000,0000,,K-Không còn cách nào á?!
Dialogue: 0,0:12:16.51,0:12:18.21,Default,hakaze,0000,0000,0000,,Vậy cậu ta là ai thế?
Dialogue: 0,0:12:18.21,0:12:20.60,Default,yoshino,0000,0000,0000,,Cậu ta hỏi tôi về mấy chuyến tàu.
Dialogue: 0,0:12:20.60,0:12:21.93,Default,yoshino,0000,0000,0000,,Cậu ta muốn tới núi Phú Sĩ.
Dialogue: 0,0:12:21.93,0:12:22.59,Default,hakaze,0000,0000,0000,,Hả?
Dialogue: 0,0:12:22.87,0:12:24.53,Default,hakaze,0000,0000,0000,,Ngươi bị ngốc à?!
Dialogue: 0,0:12:24.84,0:12:27.72,Default,hakaze,0000,0000,0000,,Có biết chỗ đó hiện giờ cấm dân thường lai vãng không hả?
Dialogue: 0,0:12:29.45,0:12:35.93,Default - italics,yoshino,0000,0000,0000,,Tuyệt Viên Chi Mộc tọa lạc nơi ấy được coi như là một trong những nguyên nhân gây ra vụ hỗn loạn,
Dialogue: 0,0:12:35.93,0:12:39.04,Default - italics,yoshino,0000,0000,0000,,vậy nên chỉ những người có quyền hạn mới có thể ra vào khu vực đó.
Dialogue: 0,0:12:39.76,0:12:45.07,Default - italics,hakaze,0000,0000,0000,,Hakaze-san cũng tạo một kết giới xung quanh thần Mộc.
Dialogue: 0,0:12:45.60,0:12:50.72,Default - italics,yoshino,0000,0000,0000,,Ngay cả những nhóm nghiên cứu từ nước ngoài sang cũng không thể tiến vào.
Dialogue: 0,0:12:56.06,0:12:58.54,Default,hane,0000,0000,0000,,Tôi cũng biết nơi đó cấm lai vãng...
Dialogue: 0,0:12:59.31,0:13:01.98,Default,hane,0000,0000,0000,,Nhưng dù sao thì cũng vẫn phải tới.
Dialogue: 0,0:13:02.70,0:13:06.30,Default,hane,0000,0000,0000,,Mọi người có nghe tin đồn về Tuyệt Viên Pháp Sư chứ?
Dialogue: 0,0:13:07.87,0:13:12.10,Default,hakaze,0000,0000,0000,,Không những có nghe mà chúng tôi còn biết rõ ai là người đã phát tán tin đồn đó.
Dialogue: 0,0:13:12.37,0:13:13.30,Default,hane,0000,0000,0000,,Hở?
Dialogue: 0,0:13:13.65,0:13:15.39,Default,hane,0000,0000,0000,,À, vậy thì mọi chuyện đơn giản rồi...
Dialogue: 0,0:13:15.88,0:13:20.19,Default,hane,0000,0000,0000,,Tôi nghĩ chính tôi là Tuyệt Viên Pháp Sư được nhắc tới.
Dialogue: 0,0:13:23.98,0:13:25.78,Default,hakaze,0000,0000,0000,,Hanemura phải không nhỉ?
Dialogue: 0,0:13:25.78,0:13:28.62,Default,hane,0000,0000,0000,,Là Megumu... Hanemura Megumu.
Dialogue: 0,0:13:28.88,0:13:30.78,Default,hakaze,0000,0000,0000,,Ngươi nhận ra mình có sức mạnh này từ bao giờ?
Dialogue: 0,0:13:31.10,0:13:33.66,Default,hane,0000,0000,0000,,Khoảng 1 năm trước.
Dialogue: 0,0:13:34.69,0:13:38.05,Default,hane,0000,0000,0000,,Tôi đột nhiên phát hiện mình có những năng lực kì lạ.
Dialogue: 0,0:13:38.65,0:13:42.42,Default,hane,0000,0000,0000,,Sau khi Tuyệt Viên Chi Mộc xuất hiện, năng lực đó ngày càng mạnh hơn,
Dialogue: 0,0:13:42.42,0:13:46.04,Default,,0000,0000,0000,,tôi cũng có thể sử dụng nó thành thạo hơn.
Dialogue: 0,0:13:46.81,0:13:48.34,Default - italics,hakaze,0000,0000,0000,,1 năm trước hả?
Dialogue: 0,0:13:49.06,0:13:53.24,Default - italics,hakaze,0000,0000,0000,,Ngay sau khi Samon bắt đầu kế hoạch phục sinh Tuyệt Viên Chi Mộc.
Dialogue: 0,0:13:53.92,0:13:57.32,Default,hane,0000,0000,0000,,Sau đó tôi có nghe tin đồn về Tuyệt Viên Pháp Sư,
Dialogue: 0,0:13:57.32,0:14:00.96,Default,hane,0000,0000,0000,,nên tôi nghĩ năng lực này có liên quan gì đó.
Dialogue: 0,0:14:01.66,0:14:02.72,Default,hane,0000,0000,0000,,Không phải sao?
Dialogue: 0,0:14:03.20,0:14:05.18,Default,hakaze,0000,0000,0000,,Nếu ta bảo không phải thì ngươi có tin không?
Dialogue: 0,0:14:05.62,0:14:08.43,Default,hane,0000,0000,0000,,À... tôi không biết nữa.
Dialogue: 0,0:14:08.43,0:14:09.63,Default,hakaze,0000,0000,0000,,Không biết cái gì!{Không biết cái lolz}
Dialogue: 0,0:14:09.63,0:14:14.37,Default,hakaze,0000,0000,0000,,Năng lực của ngươi có thể làm cho tòa nhà này biến mất trong chớp mắt đấy.
Dialogue: 0,0:14:14.37,0:14:15.28,Default,hane,0000,0000,0000,,Hớ?!
Dialogue: 0,0:14:15.91,0:14:17.60,Default,hane,0000,0000,0000,,C-Chuyện đó...
Dialogue: 0,0:14:18.25,0:14:21.35,Default - italics,hakaze,0000,0000,0000,,Gã này... không biết gì thật à?
Dialogue: 0,0:14:22.05,0:14:25.46,Default - italics,hakaze,0000,0000,0000,,Hắn không biết sức mạnh của mình có khả năng phá vỡ mọi quy luật của thế giới?
Dialogue: 0,0:14:27.11,0:14:28.60,Default,hakaze,0000,0000,0000,,Mà thôi, nói vậy chứ không có gì phải lo lắng đâu.
Dialogue: 0,0:14:28.60,0:14:29.48,Default,hakaze,0000,0000,0000,,Sao không ăn đi?
Dialogue: 0,0:14:29.48,0:14:31.01,Default,hane,0000,0000,0000,,À, vâng...
Dialogue: 0,0:14:34.15,0:14:35.59,Default,hane,0000,0000,0000,,G-Gì đây?
Dialogue: 0,0:14:38.11,0:14:39.27,Default,hakaze,0000,0000,0000,,Ngươi
Dialogue: 0,0:14:39.57,0:14:42.44,Default,hakaze,0000,0000,0000,,thật sự nghĩ mình là phù thủy duy nhất trên thế giới hả?
Dialogue: 0,0:14:43.48,0:14:46.66,Default,hakaze,0000,0000,0000,,Nếu có người có thể đại diện cho Tuyệt Viên Chi Mộc,
Dialogue: 0,0:14:46.66,0:14:50.99,Default,hakaze,0000,0000,0000,,thì cũng có người có thể đại diện cho thần mộc đang cai quản thế giới.
Dialogue: 0,0:14:51.27,0:14:52.59,Default,hakaze,0000,0000,0000,,Và ta chính là người đó.
Dialogue: 0,0:14:53.36,0:14:54.79,Default,hane,0000,0000,0000,,Đ-Đùa hả?
Dialogue: 0,0:14:56.28,0:15:00.60,Default,hakaze,0000,0000,0000,,Sao? Chúng ta thử một chút nhé?
Dialogue: 0,0:15:02.73,0:15:07.14,Default,samon,0000,0000,0000,,Cũng còn may là Takigawa Yoshino không biết tình cảm công chúa giành cho cậu ta,
Dialogue: 0,0:15:07.14,0:15:09.84,Default,samon,0000,0000,0000,,cũng không biết mình đang nắm trong tay vận mệnh của thế giới.
Dialogue: 0,0:15:10.36,0:15:18.00,Default,samon,0000,0000,0000,,Nhưng mà gã đó, hắn là loại người khi đã đặt niềm tin vào một điều gì đó thì có thể hi sinh tất cả những thứ khác.
Dialogue: 0,0:15:19.57,0:15:20.87,Default,samon,0000,0000,0000,,Nếu có gì đó xảy ra,
Dialogue: 0,0:15:20.87,0:15:23.49,Default,,0000,0000,0000,,tôi chắc cậu ta sẽ không do dự mà tác động tới công chúa.
Dialogue: 0,0:15:24.97,0:15:29.53,Default,mahiro,0000,0000,0000,,Vậy là các người muốn giết Yoshino trước khi chuyện đó xảy ra?
Dialogue: 0,0:15:29.86,0:15:32.24,Default,haya,0000,0000,0000,,Chúng tôi đang muốn nhờ cậu ngăn chặn chuyện đó đấy.
Dialogue: 0,0:15:32.49,0:15:34.24,Default,haya,0000,0000,0000,,Nghe nói cậu và cậu ta quen nhau khá lâu.
Dialogue: 0,0:15:37.40,0:15:40.37,Default,mahiro,0000,0000,0000,,Bạn gái Yoshino thì sao? Cô ấy vẫn ổn chứ.
Dialogue: 0,0:15:40.69,0:15:41.90,Default,haya,0000,0000,0000,,Nghe nói cô ấy không sao.
Dialogue: 0,0:15:42.30,0:15:43.95,Default,haya,0000,0000,0000,,Dù là đến cái tên tôi cũng chả biết,
Dialogue: 0,0:15:43.95,0:15:46.34,Default,haya,0000,0000,0000,,có lẽ vì cậu ấy không muốn lôi cô ấy vào những chuyện rắc rối này.
Dialogue: 0,0:15:47.00,0:15:48.25,Default,mahiro,0000,0000,0000,,Ra vậy...
Dialogue: 0,0:15:48.94,0:15:51.00,Default - italics,mahiro,0000,0000,0000,,Nếu bạn gái cậu ta vẫn còn sống,
Dialogue: 0,0:15:51.00,0:15:52.97,Default - italics,,0000,0000,0000,,có lẽ Yoshino sẽ không làm điều gì nông nổi.
Dialogue: 0,0:15:53.65,0:15:55.05,Default - italics,mahiro,0000,0000,0000,,Chắc là không phải lo.
Dialogue: 0,0:15:55.44,0:15:57.43,Default,haya,0000,0000,0000,,Sao? Cậu sẽ tham gia với chúng tôi chứ?
Dialogue: 0,0:15:59.11,0:16:03.03,Default - italics,yoshino,0000,0000,0000,,Làm ơn đừng nói với ai khác về chuyện của bạn gái tôi.
Dialogue: 0,0:16:03.55,0:16:08.86,Default - italics,yoshino,0000,0000,0000,,Càng nhiều người biết thì khả năng Mahiro vô tình phát hiện ra càng cao.
Dialogue: 0,0:16:09.59,0:16:13.03,Default - italics,yoshino,0000,0000,0000,,Nếu để cậu ta biết được, mọi chuyện sẽ trở nên rất phiền toái đấy.
Dialogue: 0,0:16:14.36,0:16:15.60,Default - italics,eva,0000,0000,0000,,Đúng vậy...
Dialogue: 0,0:16:15.60,0:16:18.29,Default - italics,eva,0000,0000,0000,,Hiện giờ tốt nhất là không nên để ai biết.
Dialogue: 0,0:16:19.04,0:16:24.30,Default - italics,eva,0000,0000,0000,,Nhưng không rõ thực sự thì Yoshino-kun đang nghĩ gì...
Dialogue: 0,0:16:25.70,0:16:27.92,Default,mahiro,0000,0000,0000,,Tôi sẽ trợ giúp kế hoạch về Yoshino,
Dialogue: 0,0:16:28.47,0:16:32.23,Default,mahiro,0000,0000,0000,,đổi lại các người cũng phải giúp tôi tìm ra hung thủ giết Aika.
Dialogue: 0,0:16:32.86,0:16:34.18,Default,mahiro,0000,0000,0000,,Thỏa thuận như vậy được chứ?
Dialogue: 0,0:16:34.58,0:16:35.59,Default,haya,0000,0000,0000,,Ờ.
Dialogue: 0,0:16:36.87,0:16:38.01,Default,mahiro,0000,0000,0000,,Hiểu rồi...
Dialogue: 0,0:16:38.01,0:16:40.59,Default,mahiro,0000,0000,0000,,Tôi sẽ làm những gì các người muốn.
Dialogue: 0,0:16:41.54,0:16:43.85,Default - italics,mahiro,0000,0000,0000,,Yoshino, cậu nợ tớ chuyện này đấy.
Dialogue: 0,0:16:44.39,0:16:46.73,Default - italics,,0000,0000,0000,,Giờ tớ sẽ bảo vệ cậu.
Dialogue: 0,0:16:48.36,0:16:50.66,Default,haya,0000,0000,0000,,Anh định giấu chuyện này với Fuwa Mahiro tới bao giờ?
Dialogue: 0,0:16:51.36,0:16:52.91,Default,samon,0000,0000,0000,,Không nói thì cậu ta cũng sẽ sớm nhận ra thôi...
Dialogue: 0,0:16:53.80,0:16:57.76,Default,samon,0000,0000,0000,,rằng Takigawa Yoshino có khả năng chính là Tuyệt Viên Pháp Sư.
Dialogue: 0,0:16:59.82,0:17:02.25,Default,hakaze,0000,0000,0000,,Hanemura, lùi lại một chút.
Dialogue: 0,0:17:02.25,0:17:04.35,Default,hakaze,0000,0000,0000,,Như vậy ngươi có thể sử dụng ma thuật dễ dàng hơn.
Dialogue: 0,0:17:04.35,0:17:05.92,Default,hane,0000,0000,0000,,À, vâng...
Dialogue: 0,0:17:06.82,0:17:09.87,Default,yoshino,0000,0000,0000,,Quyết đấu như vậy liệu có nguy hiểm quá không?
Dialogue: 0,0:17:09.87,0:17:16.51,Default,hakaze,0000,0000,0000,,Nếu không buộc hắn ta sử dụng mà thuật thì thực sự rất khó đánh giá năng lực hắn mạnh tới đâu.
Dialogue: 0,0:17:17.08,0:17:20.26,Default,hakaze,0000,0000,0000,,Và cũng còn để đánh giá xem hắn ta có thể giết người hay không.
Dialogue: 0,0:17:21.53,0:17:22.84,Default,hakaze,0000,0000,0000,,Đừng lo.
Dialogue: 0,0:17:22.84,0:17:25.47,Default,hakaze,0000,0000,0000,,Nếu ngay cả Khởi Nguyên Công Chúa cũng không thể thắng,
Dialogue: 0,0:17:25.47,0:17:27.69,Default,hakaze,0000,0000,0000,,thì trên thế giới sẽ chẳng có người nào thắng được hắn ta đâu.
Dialogue: 0,0:17:29.66,0:17:31.17,Default,hakaze,0000,0000,0000,,Luật rất đơn giản.
Dialogue: 0,0:17:31.17,0:17:35.47,Default,,0000,0000,0000,,Dùng ma thuật, ít nhất là hãy làm cho đầu gối ta chạm đất.
Dialogue: 0,0:17:35.47,0:17:37.28,Default,hakaze,0000,0000,0000,,Làm được vậy coi như ngươi thắng.
Dialogue: 0,0:17:37.57,0:17:40.78,Default,hakaze,0000,0000,0000,,Nếu ngươi thắng, ta sẽ nói cho ngươi tất cả những gì ngươi muốn biết.
Dialogue: 0,0:17:41.25,0:17:44.66,Default,hane,0000,0000,0000,,À, vậy như thế nào thì là tôi thua?
Dialogue: 0,0:17:45.09,0:17:48.67,Default,hakaze,0000,0000,0000,,Khi mà cánh tay của ngươi bẻ gập về hướng khác một cách bất thường.
Dialogue: 0,0:17:48.67,0:17:49.60,Default,hane,0000,0000,0000,,Hở?
Dialogue: 0,0:17:50.13,0:17:50.87,Default,hakaze,0000,0000,0000,,Bắt đầu nhé.
Dialogue: 0,0:17:51.30,0:17:52.58,Default - italics,hakaze,0000,0000,0000,,Đế vương chi mộc,
Dialogue: 0,0:17:52.58,0:17:54.23,Default - italics,hakaze,0000,0000,0000,,tồn tại vượt trên tất cả,
Dialogue: 0,0:17:54.23,0:17:56.47,Default - italics,hakaze,0000,0000,0000,,Nghe lệnh ta, thực hiện nguyện vọng của ta!
Dialogue: 0,0:18:05.16,0:18:06.64,Default,hane,0000,0000,0000,,G-Gì thế này?
Dialogue: 0,0:18:08.59,0:18:12.72,Default,hakaze,0000,0000,0000,,Ở đẳng cấp của ta, có thể kiểm soát kết giới một cách tự do,
Dialogue: 0,0:18:12.72,0:18:15.07,Default,hakaze,0000,0000,0000,,và còn có thể hạ gục đối thủ từ khoảng cách xa.
Dialogue: 0,0:18:17.70,0:18:19.78,Default - italics,hane,0000,0000,0000,,Đ-Đây là ma thuật sao?!
Dialogue: 0,0:18:21.62,0:18:24.70,Default - italics,hakaze,0000,0000,0000,,Hanemura, nếu ngươi thực sự là "hàng thật",
Dialogue: 0,0:18:24.70,0:18:27.08,Default - italics,,0000,0000,0000,,ngươi sẽ có thể phá giải ma thuật này dễ dàng.
Dialogue: 0,0:18:27.85,0:18:32.26,Default - italics,hane,0000,0000,0000,,Liệu ngươi có khả năng giết ta và thay đổi quy luật của thế giới không?
Dialogue: 0,0:18:33.78,0:18:41.05,Default,samon,0000,0000,0000,,Sự tồn tại của Takigawa Yoshino đang dần thoát khỏi quy luật của Khởi Nguyên Chi Mộc.
Dialogue: 0,0:18:42.03,0:18:43.76,Default,samon,0000,0000,0000,,Kể cả nếu cậu ta không có mặt ở núi Phú Sĩ,
Dialogue: 0,0:18:43.76,0:18:46.02,Default,,0000,0000,0000,,công chúa cũng có thể trở lại hiện tại.
Dialogue: 0,0:18:46.39,0:18:47.62,Default,haya,0000,0000,0000,,Ý anh là sao?
Dialogue: 0,0:18:48.01,0:18:53.52,Default,samon,0000,0000,0000,,Chúng tôi đã không thể tìm ra hung thủ sát hại em gái Fuwa Mahiro trong gia tộc Kusaribe.
Dialogue: 0,0:18:53.90,0:18:55.62,Default,samon,0000,0000,0000,,Tại thời điểm đó,
Dialogue: 0,0:18:55.62,0:18:59.41,Default,samon,0000,0000,0000,,công chúa đã kết luận hung thủ là Tuyệt Viên Pháp Sư.
Dialogue: 0,0:18:59.80,0:19:02.41,Default,samon,0000,0000,0000,,Vậy nên bất kể Takigawa Yoshino có mặt ở đó hay không,
Dialogue: 0,0:19:02.84,0:19:06.16,Default,samon,0000,0000,0000,,Fuwa Mahiro cũng sẽ hội quân cùng công chúa,
Dialogue: 0,0:19:06.86,0:19:10.25,Default,samon,0000,0000,0000,,và tìm ra cách phá hủy nhà tù thời gian.
Dialogue: 0,0:19:10.25,0:19:12.96,Default,samon,0000,0000,0000,,Hoặc giả như cậu ta khởi động phù bảo,
Dialogue: 0,0:19:12.96,0:19:15.46,Default,,0000,0000,0000,,và buộc tôi đưa công chúa trở lại.
Dialogue: 0,0:19:16.00,0:19:19.45,Default,samon,0000,0000,0000,,Khởi Nguyên Chi Mộc vốn không cần thêm người nào khác.
Dialogue: 0,0:19:20.06,0:19:25.22,Default,samon,0000,0000,0000,,Trên thực tế thì chính sự xuất hiện của cậu ta làm cho Khởi Nguyên Chi Mộc gặp thêm nhiều rắc rối.
Dialogue: 0,0:19:30.70,0:19:31.56,Default,hakaze,0000,0000,0000,,Ồ?
Dialogue: 0,0:19:31.99,0:19:34.82,Default,hakaze,0000,0000,0000,,Cũng đã nhớ ra mình sử dụng được ma thuật à?
Dialogue: 0,0:19:35.35,0:19:37.48,Default - italics,hane,0000,0000,0000,,Đúng rồi, ma thuật...
Dialogue: 0,0:19:37.48,0:19:39.32,Default - italics,hane,0000,0000,0000,,Mình cũng sử dụng được ma thuật.
Dialogue: 0,0:19:39.96,0:19:42.27,Default - italics,hane,0000,0000,0000,,Cô ấy đang thử thách mình.
Dialogue: 0,0:19:42.66,0:19:45.52,Default - italics,hane,0000,0000,0000,,Để xem mình có năng lực thay đổi thế giới hay không,
Dialogue: 0,0:19:45.52,0:19:47.65,Default - italics,hane,0000,0000,0000,,xem mình có khả năng chiến đấu hay không.
Dialogue: 0,0:19:48.36,0:19:50.50,Default - italics,hane,0000,0000,0000,,Cô gái ấy có lẽ không phải kẻ địch.
Dialogue: 0,0:19:53.89,0:19:55.29,Default - italics,hane,0000,0000,0000,,Có lẽ mình sẽ làm được.
Dialogue: 0,0:19:55.85,0:20:00.51,Default - italics,hane,0000,0000,0000,,Dường như có thứ gì đó đang thức tỉnh bên trong từng tế bào của mình...
Dialogue: 0,0:20:01.85,0:20:02.72,Default,hane,0000,0000,0000,,Tôi tới đây!
Dialogue: 0,0:20:04.55,0:20:06.64,Default,hakaze,0000,0000,0000,,Vậy để xem có thể tới được đâu nhé.
Dialogue: 0,0:20:12.67,0:20:14.36,Default,hane,0000,0000,0000,,Chiêu đó không còn tác dụng đâu!
Dialogue: 0,0:20:15.81,0:20:16.92,Default,hane,0000,0000,0000,,Hồng Xa Luân!{=))}
Dialogue: 0,0:20:24.88,0:20:25.78,Default,yoshino,0000,0000,0000,,Hakaze-san!
Dialogue: 0,0:20:30.69,0:20:32.92,Default,hane,0000,0000,0000,,T-Tay... Cánh tay cô!
Dialogue: 0,0:20:32.92,0:20:34.25,Default,hane,0000,0000,0000,,Làm sao bây giờ?
Dialogue: 0,0:20:34.25,0:20:35.53,Default,hakaze,0000,0000,0000,,Đừng có xoắn lên!
Dialogue: 0,0:20:36.33,0:20:40.00,Default,hakaze,0000,0000,0000,,Nghĩ mất tay rồi thì không mọc lại được à?
Dialogue: 0,0:20:40.82,0:20:42.84,Default,hakaze,0000,0000,0000,,Có mỗi cánh tay thôi mà cũng xoắn lên,
Dialogue: 0,0:20:42.84,0:20:44.03,Default,hakaze,0000,0000,0000,,đồ đàn bà!
Dialogue: 0,0:20:52.34,0:20:54.63,Default,hakaze,0000,0000,0000,,Tay cậu ta ngoặt sang hướng bất thường thật kìa.
Dialogue: 0,0:20:54.63,0:20:56.92,Default,yoshino,0000,0000,0000,,Đừng làm tôi sợ chứ, Hakaze-san.
Dialogue: 0,0:20:56.92,0:20:58.26,Default,hakaze,0000,0000,0000,,Xin lỗi nhé.
Dialogue: 0,0:20:58.26,0:21:02.11,Default,,0000,0000,0000,,Tôi đã dụng ma thuật phục hồi lên cánh tay để nó tự khởi động khi tay bị chém.
Dialogue: 0,0:21:02.44,0:21:04.45,Default,hakaze,0000,0000,0000,,Chỉ là để xem phản ứng của hắn thôi.
Dialogue: 0,0:21:05.01,0:21:07.52,Default,hakaze,0000,0000,0000,,Sức mạnh này thì đúng là của Tuyệt Viên rồi.
Dialogue: 0,0:21:08.14,0:21:11.25,Default,hakaze,0000,0000,0000,,Nhưng rõ ràng cậu ta chưa hề giết ai cả.
Dialogue: 0,0:21:11.48,0:21:12.25,Default,yoshino,0000,0000,0000,,Hả?
Dialogue: 0,0:21:12.25,0:21:17.88,Default,hakaze,0000,0000,0000,,Tôi không nghĩ gã ngốc này lại mang Tuyệt Viên Chi Tâm,\N thứ vốn chỉ biết hủy diệt tất cả.
Dialogue: 0,0:21:19.82,0:21:21.30,Default,samon,0000,0000,0000,,Takigawa Yoshino...
Dialogue: 0,0:21:21.30,0:21:23.42,Default,samon,0000,0000,0000,,Hắn làm mọi chuyện trở nên rối loạn,
Dialogue: 0,0:21:23.77,0:21:30.71,Default,smaon,0000,0000,0000,,không những vậy còn làm cho công chúa nảy sinh nghi ngờ đối với Khởi Nguyên Chi Mộc.
Dialogue: 0,0:21:30.71,0:21:31.68,Default,,0000,0000,0000,,Và còn...
Dialogue: 0,0:21:31.68,0:21:34.14,Default,haya,0000,0000,0000,,Và còn đánh cắp cả trái tim cô ấy.
Dialogue: 0,0:21:35.17,0:21:43.69,Default,samon,0000,0000,0000,,{\fs55}Ngoài Tuyệt Viên Pháp Sư, tôi không thể nghĩ ra một ai khác đủ khả năng làm rối loạn kịch bản của Khởi Nguyên Chi Mộc tới mức này.
Dialogue: 0,0:21:45.36,0:21:48.34,Default,haya,0000,0000,0000,,Nếu cậu ta là Tuyệt Viên Pháp Sư,
Dialogue: 0,0:21:48.34,0:21:50.45,Default,haya,0000,0000,0000,,có vẻ như cậu ta đã hoàn thành khá tốt nhiệm vụ.
Dialogue: 0,0:21:50.94,0:21:54.72,Default,haya,0000,0000,0000,,Không cần sử dụng ma thuật mà vẫn ngáng đường Khởi Nguyên Chi Mộc,
Dialogue: 0,0:21:54.72,0:21:57.03,Default,,0000,0000,0000,,và nắm giữ trong tay vận mệnh của nó.
Dialogue: 0,0:21:57.03,0:21:58.90,Default,samon,0000,0000,0000,,Ờ, nhưng mà...
Dialogue: 0,0:22:01.33,0:22:02.13,Default,eva,0000,0000,0000,,Alo?
Dialogue: 0,0:22:03.01,0:22:06.18,Default - italics,samon,0000,0000,0000,,Nhưng nếu cậu ta thực sự là Tuyệt Viên Pháp Sư,
Dialogue: 0,0:22:07.04,0:22:10.98,Default - italics,samon,0000,0000,0000,,thì cũng có nghĩa chính cậu ta là người đã giết em gái Fuwa Mahiro.
Dialogue: 0,0:22:11.66,0:22:13.46,Default - italics,samon,0000,0000,0000,,Liệu có thể tính tới trường hợp đó không?
Dialogue: 0,0:22:14.25,0:22:15.40,Default,eva,0000,0000,0000,,Này, mọi người...
Dialogue: 0,0:22:16.35,0:22:18.02,Default,eva,0000,0000,0000,,Là Yoshino-kun...
Dialogue: 0,0:22:18.02,0:22:20.27,Default,,0000,0000,0000,,Cậu ấy nói đã tìm ra Tuyệt Viên Pháp Sư,
Dialogue: 0,0:22:20.68,0:22:23.23,Default,,0000,0000,0000,,và hắn muốn nói chuyện với mọi người.
Dialogue: 0,0:24:02.41,0:24:05.57,Default,hane,0000,0000,0000,,Cô ấy là bạn gái tôi, chúng tôi đã hẹn hò từ năm nhất,
Dialogue: 0,0:24:05.57,0:24:08.09,Default,hane,0000,0000,0000,,da của cô ấy trắng như tuyết nên tôi gọi cô ấy là Yu-chan!
Dialogue: 0,0:24:08.09,0:24:09.30,Default,?,0000,0000,0000,,Đừng có nói với tôi.
Dialogue: 0,0:24:09.75,0:24:11.72,Default,mahiro,0000,0000,0000,,Ngươi là Stalker hả?
Dialogue: 0,0:24:12.07,0:24:13.97,Default,?,0000,0000,0000,,Đụng phải từ cấm kị rồi...{Thằng Hanemura kêu Mahiro là siscon thì phải}
Dialogue: 0,0:24:13.97,0:24:15.51,Default,eva,0000,0000,0000,,Không hay rồi!
Dialogue: 0,0:24:15.51,0:24:19.37,Default,?,0000,0000,0000,,N-N-Nhưng chưa rõ kế hoạch...
Dialogue: 0,0:24:20.02,0:24:21.94,Default,hakaze,0000,0000,0000,,Cậu lăng nhăng quá đấy.
Dialogue: 0,0:24:21.94,0:24:24.02,Default,yoshino,0000,0000,0000,,Có lẽ là vậy...
Dialogue: 0,0:24:24.02,0:24:27.02,Title,sign,0000,0000,0000,,Tập 15 \NTrông như cậu đang toán tính điều gì đó
