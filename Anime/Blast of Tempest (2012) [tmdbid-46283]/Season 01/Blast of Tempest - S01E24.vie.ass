Dialogue: 0,0:00:05.36,0:00:07.11,Default,hane,0000,0000,0000,,Đây chính là Mộc Trụ...
Dialogue: 0,0:00:07.63,0:00:10.27,Default,hane,0000,0000,0000,,Mặt trời vẫn đang ở trên kia,
Dialogue: 0,0:00:10.27,0:00:12.27,Default,hane,0000,0000,0000,,mà đứng ở nơi đây cảm giác thật lạnh lẽo.
Dialogue: 0,0:00:26.04,0:00:29.33,Default - italics,samon,0000,0000,0000,,Vẫn còn một vài con tàu nằm ngoài phạm vi hoạt động của ma thuật...
Dialogue: 0,0:00:30.36,0:00:31.42,Default,samon,0000,0000,0000,,Liệu có thể bảo vệ hết không đây?
Dialogue: 0,0:00:37.99,0:00:40.25,Default,hakaze,0000,0000,0000,,Vẫn còn một con tàu tuần tiễu rớt lại phía sau?
Dialogue: 0,0:00:48.34,0:00:49.24,Default,tetsu,0000,0000,0000,,Công chúa!
Dialogue: 0,0:00:49.24,0:00:50.36,Default,hakaze,0000,0000,0000,,Tôi không sao...
Dialogue: 0,0:00:50.36,0:00:51.90,Default,hakaze,0000,0000,0000,,Lo việc của các anh đi.
Dialogue: 0,0:00:53.10,0:00:54.40,Default,hakaze,0000,0000,0000,,Việc này rất quan trọng...
Dialogue: 0,0:00:56.22,0:01:00.25,Default,hakaze,0000,0000,0000,,Phải thỉnh cầu vị thần mà mình đang chống lại,\N cảm giác thật kì lạ.
Dialogue: 0,0:01:06.47,0:01:08.30,Default,mahiro,0000,0000,0000,,Còn tên nào tiếp tục sử dụng những thứ thế này,
Dialogue: 0,0:01:08.30,0:01:09.54,Default,mahiro,0000,0000,0000,,sẽ không còn là cảnh cáo nữa đâu đấy!
Dialogue: 0,0:01:13.34,0:01:17.15,Default,mahiro,0000,0000,0000,,Cũng may mà sớm lấy được viên đạn ra ngoài...
Dialogue: 0,0:01:17.15,0:01:18.98,Default,yoshino,0000,0000,0000,,Xin lỗi, là lỗi của tớ.
Dialogue: 0,0:01:18.98,0:01:19.85,Default,mahiro,0000,0000,0000,,Cái gì mà lỗi của cậu?
Dialogue: 0,0:01:20.41,0:01:22.16,Default,mahiro,0000,0000,0000,,Trong cái thế giới điên rồ này,
Dialogue: 0,0:01:22.16,0:01:25.51,Default,mahiro,0000,0000,0000,,đổ lỗi cho nhau thì có nghĩa lí gì chứ.
Dialogue: 0,0:01:25.81,0:01:26.48,Default,mahiro,0000,0000,0000,,Có sao không?
Dialogue: 0,0:01:26.90,0:01:29.80,Default,yoshino,0000,0000,0000,,Vậy ra đây là cảm giác bị đạn bắn...
Dialogue: 0,0:01:29.80,0:01:31.03,Default,,0000,0000,0000,,Lần đầu được trải nghiệm đấy.
Dialogue: 0,0:01:31.95,0:01:34.73,Default,mahiro,0000,0000,0000,,Không cẩn thận là ngủm lúc nào chẳng hay đấy.
Dialogue: 0,0:01:35.37,0:01:38.36,Default,yoshino,0000,0000,0000,,Không biết Hanemura-san đã tiếp cận được Mộc Trụ chưa...
Dialogue: 0,0:01:38.36,0:01:39.11,Default,mahiro,0000,0000,0000,,Ờ.
Dialogue: 0,0:01:39.87,0:01:42.37,Default,mahiro,0000,0000,0000,,Từ giờ hoàn toàn là việc của cậu ta rồi.
Dialogue: 0,0:01:43.42,0:01:46.06,Default,mahiro,0000,0000,0000,,Phải tự tin lên đấy, Hanemura!
Dialogue: 0,0:01:48.03,0:01:49.96,Default - italics,hane,0000,0000,0000,,Giờ không ai giúp được mình nữa rồi.
Dialogue: 0,0:01:51.01,0:01:53.57,Default - italics,hane,0000,0000,0000,,Đây là trận chiến của riêng mình!
Dialogue: 0,0:01:55.14,0:01:57.47,Default - italics,hane,0000,0000,0000,,Tiến lên, hủy diệt mọi thứ cản đường!
Dialogue: 0,0:02:00.62,0:02:02.28,Default,hane,0000,0000,0000,,Mình không đủ sức mạnh sao?
Dialogue: 0,0:02:13.09,0:02:13.82,Default,hane,0000,0000,0000,,Chết tiệt!
Dialogue: 0,0:02:26.34,0:02:28.48,Default - italics,hane,0000,0000,0000,,Chết tiệt!
Dialogue: 0,0:02:48.54,0:02:52.60,Default,hane,0000,0000,0000,,Sức mạnh của Khởi Nguyên Chi Mộc quá vượt trội...
Dialogue: 0,0:03:01.77,0:03:03.79,Default,guy,0000,0000,0000,,Cánh cổng địa ngục đã mở ra?
Dialogue: 0,0:03:04.13,0:03:06.37,Default,guy,0000,0000,0000,,Hay đây là cánh cổng thiên đường?
Dialogue: 0,0:03:09.81,0:03:12.37,Default,samon,0000,0000,0000,,Mau đưa con tàu tránh xa khỏi Mộc Trụ!
Dialogue: 0,0:03:15.26,0:03:18.60,Default,samon,0000,0000,0000,,Chúng tôi đang sử dụng ma thuật để bảo vệ nó,\N nhưng không cầm cự được lâu đâu.
Dialogue: 0,0:03:18.60,0:03:19.85,Default,samon,0000,0000,0000,,Nhanh chóng rút lui đi!
Dialogue: 0,0:03:23.18,0:03:25.80,Default,guy,0000,0000,0000,,Rút lui! \N Thông báo với các tàu còn lại!
Dialogue: 0,0:03:28.36,0:03:29.27,Default,yoshino,0000,0000,0000,,Hakaze-san...
Dialogue: 0,0:03:32.44,0:03:35.61,Default - italics,hakaze,0000,0000,0000,,Cho tới khi mọi chuyện kết thúc, em sẽ không giúp anh đâu.
Dialogue: 0,0:03:36.94,0:03:37.86,Default,yoshino,0000,0000,0000,,Được.
Dialogue: 0,0:03:45.91,0:03:48.55,Default,guy,0000,0000,0000,,Tuyệt Viên Pháp Sư đang bảo vệ con tàu.
Dialogue: 0,0:03:50.77,0:03:52.87,Default - italics,samon,0000,0000,0000,,Cần phải đảm bảo số người sống sót nhiều nhất có thể.
Dialogue: 0,0:03:53.85,0:03:55.13,Default - italics,samon,0000,0000,0000,,Nhanh lên, Hanemura!
Dialogue: 0,0:03:55.36,0:03:56.54,Default - italics,natsu,0000,0000,0000,,Hanemura-dono...
Dialogue: 0,0:04:02.17,0:04:04.30,Default - italics,hakaze,0000,0000,0000,,Hanemura... Vẫn chưa được sao?
Dialogue: 0,0:04:15.92,0:04:17.06,Default - italics,hane,0000,0000,0000,,Không được rồi.
Dialogue: 0,0:04:17.49,0:04:21.91,Default - italics,hane,0000,0000,0000,,Mình sao có thể chống lại một vị thần như Khởi Nguyên Chi Mộc...
Dialogue: 0,0:04:23.95,0:04:24.91,Default,mahiro,0000,0000,0000,,Chết tiệt!
Dialogue: 0,0:04:25.24,0:04:26.53,Default,mahiro,0000,0000,0000,,Sai lầm ở đâu đó...
Dialogue: 0,0:04:27.12,0:04:29.00,Default,mahiro,0000,0000,0000,,Một sai lầm chí mạng!
Dialogue: 0,0:04:30.84,0:04:31.54,Default,yoshino,0000,0000,0000,,Vậy...
Dialogue: 0,0:04:33.85,0:04:37.77,Default,yoshino,0000,0000,0000,,Những lúc như thế này, nếu là Aika-chan thì cô ấy sẽ nói gì?
Dialogue: 0,0:04:39.38,0:04:41.47,Default,mahiro,0000,0000,0000,,Nếu là Aika...
Dialogue: 0,0:04:42.43,0:04:43.34,Default - italics,aika,0000,0000,0000,,Vẫn không đủ...
Dialogue: 0,0:04:44.28,0:04:45.01,Default - italics,mahiro,0000,0000,0000,,Hở?
Dialogue: 0,0:04:45.51,0:04:48.39,Default - italics,aika,0000,0000,0000,,Vở kịch này đúng là dở tệ.
Dialogue: 0,0:04:48.83,0:04:52.09,Default - italics,mahiro,0000,0000,0000,,Gì chứ hả? Lúc nào cũng đọc Shakespeare.
Dialogue: 0,0:04:52.09,0:04:55.11,Default - italics,mahiro,0000,0000,0000,,Em nên đọc những loại sách khác nữa.
Dialogue: 0,0:04:55.50,0:04:59.63,Default - italics,aika,0000,0000,0000,,Nhưng mà chẳng có tí ánh sáng nào trong vở kịch này.
Dialogue: 0,0:04:59.63,0:05:00.40,Default - italics,mahiro,0000,0000,0000,,Ánh sáng?
Dialogue: 0,0:05:01.80,0:05:02.75,Default - italics,aika,0000,0000,0000,,Vâng.
Dialogue: 0,0:05:03.19,0:05:03.99,Default - italics,aika,0000,0000,0000,,Ánh sáng.
Dialogue: 0,0:05:05.48,0:05:10.65,Default - italics,aika,0000,0000,0000,,Thứ ánh sáng phảng phất được sinh ra khi những tình cảm của con người cộng hưởng với nhau.
Dialogue: 0,0:05:11.58,0:05:13.81,Default,guy 1,0000,0000,0000,,Có biến động từ phía Tuyệt Viên Chi Mộc...
Dialogue: 0,0:05:13.81,0:05:14.62,Default,guy 2,0000,0000,0000,,Rút lui!
Dialogue: 0,0:05:15.07,0:05:16.69,Default,guy,0000,0000,0000,,Cứ bỏ lại toàn bộ vũ khí!
Dialogue: 0,0:05:17.34,0:05:19.13,Default,guy,0000,0000,0000,,Mau rời xa nơi này càng nhanh càng tốt.
Dialogue: 0,0:05:19.13,0:05:19.84,Default,,0000,0000,0000,,Nhanh lên!
Dialogue: 0,0:05:22.71,0:05:24.34,Default,guy,0000,0000,0000,,Này, các người cũng mau...
Dialogue: 0,0:05:39.53,0:05:44.89,Default - italics,aika,0000,0000,0000,,Thứ ánh sáng bao trùm lên tất cả,\N dù là cái thiện, cái ác, tội lỗi hay hạnh phúc.
Dialogue: 0,0:05:45.45,0:05:47.70,Default - italics,aika,0000,0000,0000,,Thứ ánh sáng huyền ảo...
Dialogue: 0,0:05:50.78,0:05:53.57,Default - italics,aika,0000,0000,0000,,soi sáng mọi chân lý.
Dialogue: 0,0:06:01.46,0:06:04.20,Default - italics,hane,0000,0000,0000,,Xin lỗi mọi người.
Dialogue: 0,0:06:05.97,0:06:07.95,Default - italics,hane,0000,0000,0000,,Tôi đã không thể...
Dialogue: 0,0:06:27.36,0:06:28.45,Default,hane,0000,0000,0000,,Tới đây!
Dialogue: 0,0:06:33.15,0:06:34.24,Default,mahiro,0000,0000,0000,,Đó là...
Dialogue: 0,0:06:53.75,0:06:56.68,Default - italics,hakaze,0000,0000,0000,,Tuyệt Viên Kiếm...{Tuyệt Viên Chi Kiếm, Tuyệt Viên Chi Nhận @_@}
Dialogue: 0,0:06:58.70,0:06:59.87,Default,hane,0000,0000,0000,,Tới lúc rồi.
Dialogue: 0,0:07:01.05,0:07:05.19,Default,hane,0000,0000,0000,,Mình đã biết mình phải làm những gì.
Dialogue: 0,0:07:05.78,0:07:07.19,Default,hane,0000,0000,0000,,Thiên đường giả tạo.
Dialogue: 0,0:07:07.83,0:07:09.45,Default,hane,0000,0000,0000,,Thiên đường bị phong ấn.
Dialogue: 0,0:07:09.81,0:07:11.34,Default,hane,0000,0000,0000,,Chia cắt tất cả...
Dialogue: 0,0:07:12.26,0:07:13.95,Default,hane,0000,0000,0000,,chính là Tuyệt Viên!
Dialogue: 0,0:07:14.96,0:07:16.11,Default,hane,0000,0000,0000,,Đây là lúc kết thúc.
Dialogue: 0,0:07:17.90,0:07:18.83,Default,hane,0000,0000,0000,,Và...
Dialogue: 0,0:07:20.95,0:07:22.26,Default,hane,0000,0000,0000,,Bắt đầu cũng chính từ đây!
Dialogue: 0,0:07:25.78,0:07:27.92,Default,hane,0000,0000,0000,,Hủy diệt!
Dialogue: 0,0:08:10.62,0:08:11.88,Default,yoshino,0000,0000,0000,,Đẹp quá.
Dialogue: 0,0:08:12.74,0:08:19.39,Default,mahiro,0000,0000,0000,,Bướm thường bị người ta nói là mang theo linh hồn người chết, mang tới điềm xấu.
Dialogue: 0,0:08:20.03,0:08:23.15,Default,mahiro,0000,0000,0000,,Vậy những con bướm này có ý nghĩa gì đây?
Dialogue: 0,0:08:23.15,0:08:25.90,Default,mahiro,0000,0000,0000,,Linh hồn của những người bị Thần Mộc sát hại?
Dialogue: 0,0:08:26.63,0:08:29.41,Default,yoshino,0000,0000,0000,,Người ta còn nói đến cái gọi là Mộng Hồ Điệp.
Dialogue: 0,0:08:29.41,0:08:30.40,Default,mahiro,0000,0000,0000,,Phải rồi.
Dialogue: 0,0:08:31.01,0:08:33.40,Default,mahiro,0000,0000,0000,,Không rõ thế giới này là thực tại hay vốn dĩ chỉ là giấc mơ.
Dialogue: 0,0:08:33.84,0:08:35.91,Default,mahiro,0000,0000,0000,,Không chừng cái thế giới mà chúng ta sống trước giờ
Dialogue: 0,0:08:36.21,0:08:39.29,Default,mahiro,0000,0000,0000,,vốn chỉ là một bản sao hoàn chỉnh mà thôi.
Dialogue: 0,0:08:41.79,0:08:44.16,Default,mahiro,0000,0000,0000,,Từ giờ có lẽ ma thuật sẽ hoàn toàn biến mất.
Dialogue: 0,0:08:45.07,0:08:46.42,Default,mahiro,0000,0000,0000,,Giấc mơ đã kết thúc rồi. {Kết cmnđ, triêt lí hoài}
Dialogue: 0,0:08:46.78,0:08:47.90,Default,yoshino,0000,0000,0000,,Ừ...
Dialogue: 0,0:08:47.90,0:08:51.99,Default,yoshino,0000,0000,0000,,Hãy bỏ qua mọi lệ thuộc vào thứ sức mạnh huyễn hoặc và đối mặt với thực tại.
Dialogue: 0,0:08:52.92,0:08:55.93,Title,sign,0000,0000,0000,,Tập 24\NChuyện riêng của mỗi người
Dialogue: 0,0:08:56.67,0:08:57.88,Default,eva,0000,0000,0000,,Tôi muốn 1 suất nhiều hành!
Dialogue: 0,0:08:57.88,0:09:01.18,Default,eva,0000,0000,0000,,À... Thêm 3 suất gấp đôi thịt mang về nữa!
Dialogue: 0,0:09:08.18,0:09:12.78,Default,eva,0000,0000,0000,,Mới chỉ 1 tháng mà tỉ lệ tội phạm tăng lên nhanh quá.
Dialogue: 0,0:09:12.78,0:09:16.28,Default,samon,0000,0000,0000,,Chỉ là sự bùng phát sau khi thoát khỏi ràng buộc của Thần Mộc thôi.
Dialogue: 0,0:09:16.81,0:09:17.87,Default,samon,0000,0000,0000,,Chỉ có vậy.
Dialogue: 0,0:09:20.95,0:09:24.91,Default,samon,0000,0000,0000,,Dù sao thì chúng ta cũng đã tránh được những tổn thất nghiêm trọng...
Dialogue: 0,0:09:24.91,0:09:26.17,Default,eva,0000,0000,0000,,Có lẽ vậy.
Dialogue: 0,0:09:26.17,0:09:28.35,Default,eva,0000,0000,0000,,Cả hai Thần Mộc cùng biến mất mà không có lí do,
Dialogue: 0,0:09:28.35,0:09:32.01,Default,eva,0000,0000,0000,,tất cả những gì chúng ta có thể làm bây giờ chỉ là chờ xem chuyện gì sẽ xảy ra.
Dialogue: 0,0:09:32.56,0:09:35.22,Default,samon,0000,0000,0000,,Hayakawa chắc đang phải giải quyết cái mớ hỗn độn còn lại sau vụ này...
Dialogue: 0,0:09:35.68,0:09:39.45,Default,samon,0000,0000,0000,,Nhưng cũng coi như là chuyện phải làm sau kế hoạch của Fuwa Mahiro.
Dialogue: 0,0:09:40.01,0:09:42.14,Default,guy,0000,0000,0000,,Của quý khách đây, 3 suất gấp đôi thịt mang về!
Dialogue: 0,0:09:42.49,0:09:47.10,Default,eva,0000,0000,0000,,Hayakawa còn định đào tạo Mahiro-kun thành người thay thế mình trong tương lai đấy.
Dialogue: 0,0:09:47.44,0:09:49.60,Default,eva,0000,0000,0000,,Cái gã đó lúc nào cũng suy nghĩ thấu đáo!
Dialogue: 0,0:09:50.32,0:09:51.50,Default,samon,0000,0000,0000,,Đừng nói vậy mà.
Dialogue: 0,0:09:51.89,0:09:58.41,Default,samon,0000,0000,0000,,Anh ta đã tốt bụng tới mức nhận hết những người không còn ma thuật trong gia tộc Kusaribe vào làm việc đấy.
Dialogue: 0,0:09:58.72,0:09:59.65,Default,eva,0000,0000,0000,,Tốt bụng ý à?
Dialogue: 0,0:10:00.69,0:10:03.66,Default,eva,0000,0000,0000,,Tetsuma-kun có vẻ không bằng lòng mấy đâu.
Dialogue: 0,0:10:06.01,0:10:08.71,Default,haya,0000,0000,0000,,Chúng ta sẽ làm việc với nhau trong thời gian tới,
Dialogue: 0,0:10:08.71,0:10:11.33,Default,haya,0000,0000,0000,,cậu nên tỏ thái độ tốt hơn với công việc mình.
Dialogue: 0,0:10:11.33,0:10:15.42,Default,tetsu,0000,0000,0000,,Nói cho anh biết. Tôi chỉ làm theo lệnh của Samon-dono thôi đấy.
Dialogue: 0,0:10:15.78,0:10:18.86,Default,tetsu,0000,0000,0000,,Nếu ngài ấy ra lệnh cho tôi giết anh...
Dialogue: 0,0:10:19.82,0:10:21.12,Default,haya,0000,0000,0000,,Hung hăng quá.
Dialogue: 0,0:10:21.12,0:10:25.41,Default,haya,0000,0000,0000,,Hi vọng mấy người khác trong nhà Kusaribe dễ làm việc hơn.
Dialogue: 0,0:10:30.00,0:10:31.05,Default,kid,0000,0000,0000,,Đợi đã nào...
Dialogue: 0,0:10:41.66,0:10:42.89,Default,granny 1,0000,0000,0000,,Công chúa!
Dialogue: 0,0:10:46.74,0:10:48.94,Default,granny 2,0000,0000,0000,,Cô định đi đâu vậy?
Dialogue: 0,0:10:51.37,0:10:52.96,Default,hakaze,0000,0000,0000,,Để tôi đi đi mà!
Dialogue: 0,0:10:52.96,0:10:55.89,Default,hakaze,0000,0000,0000,,Giờ tôi hết sử dụng được ma thuật rồi,\N chỉ còn là một đứa con gái bình thường thôi!
Dialogue: 0,0:10:55.89,0:10:57.26,Default,hakaze,0000,0000,0000,,Ở lại nơi này có ích gì chứ!
Dialogue: 0,0:10:57.26,0:10:58.83,Default,granny 2,0000,0000,0000,,Phải rồi.
Dialogue: 0,0:10:58.83,0:11:00.43,Default,granny 1,0000,0000,0000,,Vậy nên chúng tôi mới nói.
Dialogue: 0,0:11:01.49,0:11:05.95,Default,granny 2,0000,0000,0000,,Dù đã mất đi ma thuật, công chúa vẫn không chỉ là một người con gái bình thường.
Dialogue: 0,0:11:05.95,0:11:07.71,Default,granny 2,0000,0000,0000,,Cô không thể nấu nướng.
Dialogue: 0,0:11:07.71,0:11:09.31,Default,granny 1,0000,0000,0000,,Không biết trời đất là gì.
Dialogue: 0,0:11:09.61,0:11:12.17,Default,granny 2,0000,0000,0000,,Một đứa con gái khó bảo.
Dialogue: 0,0:11:12.98,0:11:14.91,Default,hakaze,0000,0000,0000,,Tóm lại là tôi muốn đi!
Dialogue: 0,0:11:14.91,0:11:16.03,Default,haya,0000,0000,0000,,Đi thế nào?
Dialogue: 0,0:11:18.15,0:11:21.20,Default,haya,0000,0000,0000,,Không có ma thuật thì không bay được đâu.
Dialogue: 0,0:11:21.20,0:11:24.01,Default,haya,0000,0000,0000,,Có bị gì cũng không tự vệ được đâu.
Dialogue: 0,0:11:24.34,0:11:24.83,Default,hakaze,0000,0000,0000,,Tets...
Dialogue: 0,0:11:24.83,0:11:28.20,Default,tetsu,0000,0000,0000,,À, quên mất không nói, giờ tôi là tài xế của Hayakawa.
Dialogue: 0,0:11:30.66,0:11:35.12,Default,hakaze,0000,0000,0000,,Vậy tôi đi bộ, bắt xe buýt rồi mua vé đi tàu.
Dialogue: 0,0:11:35.12,0:11:36.11,Default,haya,0000,0000,0000,,Tới đâu?
Dialogue: 0,0:11:37.14,0:11:38.65,Default,granny,0000,0000,0000,,Chuyện đó thì quá rõ rồi.
Dialogue: 0,0:11:38.65,0:11:40.09,Default,granny,0000,0000,0000,,Còn tới đâu nữa?
Dialogue: 0,0:11:40.41,0:11:41.67,Default,hakaze,0000,0000,0000,,Im đi!
Dialogue: 0,0:11:52.34,0:11:53.56,Default,eva,0000,0000,0000,,Chúng tôi về rồi.
Dialogue: 0,0:11:53.83,0:11:55.69,Default,hane,0000,0000,0000,,À, chào mọi người.
Dialogue: 0,0:11:55.69,0:11:57.34,Default,eva,0000,0000,0000,,Cậu đang làm gì thế?
Dialogue: 0,0:11:57.86,0:12:00.78,Default,hane,0000,0000,0000,,Tôi sẽ sớm rời khỏi nơi này...
Dialogue: 0,0:12:01.05,0:12:03.61,Default,hane,0000,0000,0000,,Vậy nên tôi muốn dọn dẹp một chút trước khi...
Dialogue: 0,0:12:03.89,0:12:04.32,Default,hane,0000,0000,0000,,Ái da!
Dialogue: 0,0:12:04.97,0:12:06.41,Default,eva,0000,0000,0000,,Nói linh tinh cái gì thế?
Dialogue: 0,0:12:07.08,0:12:09.98,Default,eva,0000,0000,0000,,Nhờ cậu mà thế giới được cứu đấy!
Dialogue: 0,0:12:09.98,0:12:12.03,Default,eva,0000,0000,0000,,Cứ nghỉ ngơi cho đã đi.
Dialogue: 0,0:12:12.03,0:12:13.12,Default,hane,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:12:13.73,0:12:14.84,Default,samon,0000,0000,0000,,Bữa trưa đấy.
Dialogue: 0,0:12:14.84,0:12:16.56,Default,samon,0000,0000,0000,,Có thích gừng ngâm không?
Dialogue: 0,0:12:16.97,0:12:19.16,Default,hane,0000,0000,0000,,À, cám ơn anh.
Dialogue: 0,0:12:26.31,0:12:27.60,Default,jun,0000,0000,0000,,Yu-chan?
Dialogue: 0,0:12:28.05,0:12:29.65,Default,eva,0000,0000,0000,,Yu-chan?
Dialogue: 0,0:12:30.22,0:12:32.23,Default,eva,0000,0000,0000,,À! Là người đã đá cậu chứ gì?
Dialogue: 0,0:12:32.23,0:12:33.56,Default,hane,0000,0000,0000,,À vâng.
Dialogue: 0,0:12:33.56,0:12:36.48,Default,hane,0000,0000,0000,,Tôi đã lấy hết can đảm để gửi thư cho cô ấy.
Dialogue: 0,0:12:36.48,0:12:39.83,Default,hane,0000,0000,0000,,Cô ấy đã trả lời, giờ tôi đi gặp cô ấy luôn đây.
Dialogue: 0,0:12:39.83,0:12:41.68,Default,hane,0000,0000,0000,,Cho anh này, Natsumura-san.
Dialogue: 0,0:12:41.68,0:12:42.99,Default,natsu,0000,0000,0000,,Rất cám ơn.
Dialogue: 0,0:12:43.48,0:12:45.15,Default,hane,0000,0000,0000,,Vậy tôi đi nhé!
Dialogue: 0,0:12:45.15,0:12:46.17,Default,samon,0000,0000,0000,,Chúc may mắn.
Dialogue: 0,0:12:46.53,0:12:47.49,Default,jun,0000,0000,0000,,Cố lên nhé.
Dialogue: 0,0:12:47.49,0:12:48.24,Default,hane,0000,0000,0000,,Vâng!
Dialogue: 0,0:12:50.50,0:12:51.87,Default,samon,0000,0000,0000,,Mừng cho cậu ta.
Dialogue: 0,0:12:51.87,0:12:53.16,Default,natsu,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:12:53.16,0:12:55.36,Default,eva,0000,0000,0000,,A, thật là tuyệt vời...
Dialogue: 0,0:12:55.36,0:12:56.63,Default,eva,0000,0000,0000,,Tôi ghen tị quá đi!
Dialogue: 0,0:12:57.14,0:12:59.78,Default,eva,0000,0000,0000,,Có lẽ tôi cũng nên đi tìm nửa kia cho mình.
Dialogue: 0,0:13:00.17,0:13:01.88,Default,eva,0000,0000,0000,,Mùa xuân của tôi sắp tới rồi...
Dialogue: 0,0:13:03.26,0:13:06.18,Default,samon,0000,0000,0000,,Sang xuân rồi mà trời vẫn lạnh quá...
Dialogue: 0,0:13:06.18,0:13:08.89,Default,natsu,0000,0000,0000,,Đúng vậy, vẫn nên ăn mặc cho đàng hoàng thì hơn.
Dialogue: 0,0:13:08.89,0:13:11.31,Default,samon bg,0000,0000,0000,,{\an8}Đúng vậy. Thôi ăn đi kẻo nguội.
Dialogue: 0,0:13:09.31,0:13:11.31,Default,eva,0000,0000,0000,,Này, 2 người định bơ tôi đấy à?!
Dialogue: 0,0:13:11.31,0:13:12.74,Default,samon bg,0000,0000,0000,,{\an8}Có thích gừng ngâm không?
Dialogue: 0,0:13:12.72,0:13:14.68,Default,jun,0000,0000,0000,,Này, Yamamoto-san...
Dialogue: 0,0:13:12.74,0:13:13.57,Default,natsu,0000,0000,0000,,{\an8}Vâng.
Dialogue: 0,0:13:14.68,0:13:17.10,Default,,0000,0000,0000,,Cô đang bơ tôi đấy à?
Dialogue: 0,0:13:32.82,0:13:33.80,Default,hane,0000,0000,0000,,Yu-chan...
Dialogue: 0,0:13:35.02,0:13:37.93,Default - italics,,0000,0000,0000,,Có vài chuyện anh muốn nói với em.
Dialogue: 0,0:13:46.60,0:13:51.22,Default - italics,hane,0000,0000,0000,,Câu chuyện về những người tưởng như đã mất tất cả.
Dialogue: 0,0:13:51.84,0:13:54.12,Default - italics,,0000,0000,0000,,Nhưng họ lại đạt được nhiều thứ khác khi đến với nhau.
Dialogue: 0,0:13:58.95,0:14:02.61,Default,yoshino,0000,0000,0000,,Cậu định cứu thế giới bằng cách ôn thi đại học à?
Dialogue: 0,0:14:03.87,0:14:07.59,Default,mahiro,0000,0000,0000,,Thì kiếm vài tấm bằng cũng đâu phải là ý tồi.
Dialogue: 0,0:14:07.59,0:14:10.09,Default,mahiro,0000,0000,0000,,Xây dựng quan hệ, làm việc trong thành phố,
Dialogue: 0,0:14:10.09,0:14:11.40,Default,,0000,0000,0000,,tạo lập công ty riêng...
Dialogue: 0,0:14:11.40,0:14:12.87,Default,yoshino,0000,0000,0000,,Rồi cứu thế giới à?
Dialogue: 0,0:14:13.21,0:14:15.43,Default,mahiro,0000,0000,0000,,Hủy diệt nó thì nhanh và dễ lắm,
Dialogue: 0,0:14:15.43,0:14:18.55,Default,mahiro,0000,0000,0000,,nhưng xây dựng lại thì là cả một quá trình dài đằng đẵng đấy!
Dialogue: 0,0:14:19.94,0:14:22.75,Default,yoshino,0000,0000,0000,,Trước giờ cậu vẫn toàn nói mấy chuyện như vậy mà chẳng có căn cứ gì.
Dialogue: 0,0:14:23.40,0:14:25.01,Default,mahiro,0000,0000,0000,,Mà phải rồi, vết thương của cậu thế nào?
Dialogue: 0,0:14:26.87,0:14:30.22,Default,yoshino,0000,0000,0000,,Khá hơn nhiều rồi, cũng nhờ Yamamoto-san chữa trị cho đấy.
Dialogue: 0,0:14:30.63,0:14:33.72,Default,mahiro,0000,0000,0000,,Chả hiểu cô ta là ai nữa...
Dialogue: 0,0:14:33.72,0:14:35.51,Default,yoshino,0000,0000,0000,,Lúc đầu tớ cũng hơi lo.
Dialogue: 0,0:14:35.51,0:14:39.71,Default,yoshino,0000,0000,0000,,Nhưng mà nghĩ lại, bị thương kiểu này thì vào viện làm sao được.
Dialogue: 0,0:14:39.71,0:14:43.25,Default,mahiro,0000,0000,0000,,Mà sau khi Thần Mộc bị tiêu diệt, ma thuật cũng biến mất tiêu luôn.
Dialogue: 0,0:14:44.74,0:14:45.78,Default,mahiro,0000,0000,0000,,Cái gì thế?
Dialogue: 0,0:14:47.45,0:14:51.37,Default,yoshino,0000,0000,0000,,Lời nhắn của Aika-chan ấy mà.\N Cô ấy bảo ta mở ra khi mọi chuyện kết thúc.
Dialogue: 0,0:14:57.25,0:14:58.92,Default,mahiro,0000,0000,0000,,Ai cho cậu mở ra chứ?!
Dialogue: 0,0:14:57.40,0:14:58.92,Default,yoshino,0000,0000,0000,,Này, Mahiro, cẩn thận...
Dialogue: 0,0:14:58.92,0:15:00.66,Default - italics,aika,0000,0000,0000,,2 người thấy rõ chứ?
Dialogue: 0,0:15:09.19,0:15:10.40,Default,yoshino,0000,0000,0000,,Là tin nhắn dạng phim.
Dialogue: 0,0:15:16.27,0:15:19.48,Default - italics,aika,0000,0000,0000,,Để lại lời nhắn kiểu này cảm giác cứ kì kì.
Dialogue: 0,0:15:19.48,0:15:22.40,Default - italics,aika,0000,0000,0000,,Nhưng nếu không làm thế này thì chắc Mahiro sẽ không chịu.
Dialogue: 0,0:15:22.40,0:15:25.49,Default - italics,aika,0000,0000,0000,,Thôi thì em sẽ gửi tới 2 người những lời nhắn nhủ cuối cùng bằng cách này vậy.
Dialogue: 0,0:15:26.41,0:15:29.41,Default - italics,aika,0000,0000,0000,,Lúc này có lẽ mọi người đã đánh bại được Khởi Nguyên Chi Mộc.
Dialogue: 0,0:15:29.41,0:15:32.20,Default - italics,aika,0000,0000,0000,,Nhưng do nhiều nguyên nhân phát sinh,
Dialogue: 0,0:15:32.20,0:15:34.31,Default - italics,aika,0000,0000,0000,,sẽ còn nhiều thử thách đang chờ 2 người ở phía trước.
Dialogue: 0,0:15:34.77,0:15:40.12,Default - italics,aika,0000,0000,0000,,Nhưng em tin Yoshino-san và Mahiro sẽ có thể vượt qua.
Dialogue: 0,0:15:40.12,0:15:44.79,Default - italics,aika,0000,0000,0000,,Đúng vậy, em tự sát cũng chính vì tin tưởng rằng 2 người sẽ làm được.
Dialogue: 0,0:15:45.94,0:15:50.13,Default - italics,aika,0000,0000,0000,,Yoshino-san, thật khó cho anh vì phải hẹn hò với người như em.
Dialogue: 0,0:15:50.70,0:15:52.91,Default - italics,aika,0000,0000,0000,,Không những phải làm bạn trai của một con bé xấu tính,
Dialogue: 0,0:15:52.91,0:15:54.80,Default - italics,aika,0000,0000,0000,,anh của nó lại còn là Mahiro nữa.
Dialogue: 0,0:15:54.80,0:15:56.31,Default - italics,aika,0000,0000,0000,,Mệt lắm phải không?
Dialogue: 0,0:15:57.15,0:16:01.06,Default - italics,aika,0000,0000,0000,,Nhưng nhờ anh mà em mới có được những ngày tháng vui vẻ.
Dialogue: 0,0:16:01.60,0:16:07.69,Default - italics,aika,0000,0000,0000,,Giúp em cảm nhận được rằng ở bên em có những người không sợ em, những người em có thể đặt trọn niềm tin,
Dialogue: 0,0:16:07.69,0:16:08.79,Default - italics,aika,0000,0000,0000,,em rất biết ơn anh.
Dialogue: 0,0:16:09.71,0:16:13.62,Default - italics,aika,0000,0000,0000,,Cho dù có biết chuyện em là Tuyệt Viên Pháp Sư,
Dialogue: 0,0:16:13.62,0:16:16.59,Default - italics,aika,0000,0000,0000,,chắc anh vẫn sẽ gọi em là Aika-chan thôi.
Dialogue: 0,0:16:17.11,0:16:18.26,Default - italics,aika,0000,0000,0000,,Cả Mahiro nữa.
Dialogue: 0,0:16:18.64,0:16:23.91,Default - italics,aika,0000,0000,0000,,Em rất hạnh phúc khi được ở bên anh. Những lúc ấy em có cảm giác mình chỉ là đứa em gái bình thường.
Dialogue: 0,0:16:24.77,0:16:28.31,Default - italics,aika,0000,0000,0000,,Anh luôn quan tâm, chăm sóc, lo lắng cho em,
Dialogue: 0,0:16:28.31,0:16:31.34,Default - italics,aika,0000,0000,0000,,cho dù thật ra anh chẳng cần phải như vậy.
Dialogue: 0,0:16:31.34,0:16:33.59,Default - italics,aika,0000,0000,0000,,Nhưng những điều đó làm em cảm thấy rất hạnh phúc.
Dialogue: 0,0:16:34.71,0:16:35.64,Default - italics,aika,0000,0000,0000,,Mahiro...
Dialogue: 0,0:16:35.94,0:16:40.93,Default - italics,aika,0000,0000,0000,,Đừng trách Yoshino-san vì anh ấy giấu anh chuyện bọn em hẹn hò.
Dialogue: 0,0:16:40.93,0:16:44.23,Default - italics,aika,0000,0000,0000,,Chỉ là vì chúng em nghĩ nếu không giấu anh thì khó mà nên cơm cháo gì.
Dialogue: 0,0:16:45.31,0:16:47.11,Default - italics,aika,0000,0000,0000,,Chắc giờ anh đang tức lắm.
Dialogue: 0,0:16:47.11,0:16:50.40,Default - italics,,0000,0000,0000,,Thôi thì em cho phép anh đấm Yoshino-san 3 phát đấy.
Dialogue: 0,0:16:50.40,0:16:52.24,Default,yoshino,0000,0000,0000,,A-Aika-chan...
Dialogue: 0,0:16:52.80,0:16:55.67,Default - italics,aika,0000,0000,0000,,Xin đừng thương tiếc vì cái chết của em nữa.
Dialogue: 0,0:16:55.67,0:16:58.12,Default - italics,aika,0000,0000,0000,,Em là Tuyệt Viên Pháp Sư.
Dialogue: 0,0:16:58.83,0:17:00.57,Default - italics,aika,0000,0000,0000,,Một diễn viên khi lên sân khấu
Dialogue: 0,0:17:00.57,0:17:03.49,Default - italics,,0000,0000,0000,,không thể bỏ qua kịch bản mà làm những gì mình muốn được.
Dialogue: 0,0:17:03.99,0:17:07.50,Default - italics,aika,0000,0000,0000,,Chỉ cần có một cái kết có hậu là coi như em đã làm tròn vai rồi.
Dialogue: 0,0:17:08.32,0:17:09.85,Default - italics,aika,0000,0000,0000,,Vậy nên, 2 người à,
Dialogue: 0,0:17:10.26,0:17:12.72,Default - italics,,0000,0000,0000,,đừng bận tâm về cái chết của em nữa.
Dialogue: 0,0:17:12.72,0:17:14.77,Default - italics,,0000,0000,0000,,Hãy sống cho thật tốt.
Dialogue: 0,0:17:15.59,0:17:21.78,Default - italics,aika,0000,0000,0000,,Nhờ 2 người mà em mới được trải nghiệm cái quãng thời gian mà đáng lẽ một Tuyệt Viên Pháp Sư không thể nào có được.
Dialogue: 0,0:17:22.38,0:17:26.13,Default - italics,aika,0000,0000,0000,,Cũng nhờ vậy, em mới cam tâm tình nguyện mà nhắm mắt xuôi tay.
Dialogue: 0,0:17:26.49,0:17:27.77,Default,mahiro,0000,0000,0000,,Aika...
Dialogue: 0,0:17:30.78,0:17:35.86,Default - italics,aika,0000,0000,0000,,Vậy, coi như lời chia tay, em sẽ cho hai anh chiêm ngưỡng cảnh em khỏa thân.
Dialogue: 0,0:17:41.96,0:17:43.77,Default - italics,aika,0000,0000,0000,,Chỉ là đùa thôi, đùa thôi.
Dialogue: 0,0:17:44.45,0:17:45.94,Default - italics,aika,0000,0000,0000,,Có bị hẫng không?
Dialogue: 0,0:17:47.05,0:17:49.40,Default - italics,aika,0000,0000,0000,,Thôi, 2 người hãy bảo trọng nhé.
Dialogue: 0,0:17:57.21,0:17:58.69,Default,mahiro,0000,0000,0000,,Ôi, khỉ thật...
Dialogue: 0,0:17:58.69,0:18:01.08,Default,mahiro,0000,0000,0000,,Tới phút cuối rồi mà...
Dialogue: 0,0:18:01.08,0:18:04.58,Default,mahiro,0000,0000,0000,,Yoshino, không thể tin được là cậu có thể hẹn hò được với nó.
Dialogue: 0,0:18:05.24,0:18:07.36,Default,yoshino,0000,0000,0000,,Cái đó thì khen cả đời cũng không hết đâu.
Dialogue: 0,0:18:16.22,0:18:17.40,Default,mahiro,0000,0000,0000,,Aika...
Dialogue: 0,0:18:17.88,0:18:22.18,Default,,0000,0000,0000,,Có thể với em, cuộc đời chỉ như một vở kịch,\N có bắt đầu, có kết thúc,
Dialogue: 0,0:18:22.18,0:18:24.43,Default,mahiro,0000,0000,0000,,tất cả đều theo kịch bản của một kẻ nào đó.
Dialogue: 0,0:18:25.11,0:18:28.74,Default,mahiro,0000,0000,0000,,Có lẽ chính vì vậy mà em mới thường xuyên trích Shakespeare...
Dialogue: 0,0:18:30.18,0:18:31.13,Default,mahiro,0000,0000,0000,,Nhưng mà, Aika nè...
Dialogue: 0,0:18:31.53,0:18:34.09,Default,mahiro,0000,0000,0000,,Anh muốn nói rằng em đã sai rồi!
Dialogue: 0,0:18:34.63,0:18:36.93,Default,mahiro,0000,0000,0000,,Em đã làm những việc không nên làm,
Dialogue: 0,0:18:36.93,0:18:38.87,Default,mahiro,0000,0000,0000,,và không làm những việc em nên làm.
Dialogue: 0,0:18:39.58,0:18:42.35,Default,mahiro,0000,0000,0000,,Tất cả chỉ vì em quá dựa dẫm vào cái kịch bản của ai đó.
Dialogue: 0,0:18:42.35,0:18:43.97,Default,,0000,0000,0000,,Em sai rồi.
Dialogue: 0,0:18:44.98,0:18:47.97,Default,mahiro,0000,0000,0000,,Nhưng vì em là em gái của anh,
Dialogue: 0,0:18:47.97,0:18:51.07,Default,mahiro,0000,0000,0000,,anh sẽ cứu thế giới như những gì em mong muốn.
Dialogue: 0,0:18:52.04,0:18:56.82,Default,mahiro,0000,0000,0000,,Bạn trai của em có thể yêu người khác và trở thành một kẻ xa lạ,
Dialogue: 0,0:18:56.82,0:18:59.33,Default,mahiro,0000,0000,0000,,nhưng anh thì vẫn sẽ mãi mãi là anh trai của em.
Dialogue: 0,0:19:01.91,0:19:02.95,Default,mahiro,0000,0000,0000,,Aika!
Dialogue: 0,0:19:03.58,0:19:07.45,Default,,0000,0000,0000,,Anh sẽ không bao giờ để cuộc đời mình tuân theo kịch bản của ai đó.
Dialogue: 0,0:19:07.97,0:19:10.30,Default,mahiro,0000,0000,0000,,Cho dù là Hamlet hay Tempest.
Dialogue: 0,0:19:11.20,0:19:14.92,Default,mahiro,0000,0000,0000,,Anh không biết sẽ mất bao nhiêu năm...
Dialogue: 0,0:19:15.45,0:19:18.22,Default,mahiro,0000,0000,0000,,Nhưng anh sẽ tự viết nên kết cục cho chính mình.
Dialogue: 0,0:19:19.98,0:19:22.26,Default,mahiro,0000,0000,0000,,Có lẽ nên dừng ở đây thôi.
Dialogue: 0,0:19:22.72,0:19:24.82,Default,mahiro,0000,0000,0000,,Còn 1 chuyện cuối cùng cần giải quyết.
Dialogue: 0,0:19:30.26,0:19:33.56,Default,yoshino,0000,0000,0000,,Tớ tưởng đánh tớ không có nghĩa lí gì với cậu.
Dialogue: 0,0:19:33.84,0:19:35.91,Default,mahiro,0000,0000,0000,,Aika đã cho phép rồi,
Dialogue: 0,0:19:35.91,0:19:38.58,Default,mahiro,0000,0000,0000,,Hanemura cũng khích tớ nữa,
Dialogue: 0,0:19:39.01,0:19:41.50,Default,mahiro,0000,0000,0000,,cái chuyện vứt bỏ mớ quy tắc vớ vẩn đi ấy.
Dialogue: 0,0:19:41.50,0:19:43.57,Default,yoshino,0000,0000,0000,,Dùng tay phải được không?
Dialogue: 0,0:19:43.57,0:19:45.24,Default,,0000,0000,0000,,Vai tớ vẫn đau lắm.
Dialogue: 0,0:19:52.69,0:19:55.98,Default,yoshino,0000,0000,0000,,Thôi vậy, coi như trả giá vì đã làm chuyện này chuyện kia với Aika-chan đi,
Dialogue: 0,0:19:55.98,0:19:58.19,Default,yoshino,0000,0000,0000,,như vậy vẫn còn rẻ chán.
Dialogue: 0,0:19:58.19,0:20:00.76,Default,mahiro,0000,0000,0000,,"Chuyện này chuyện kia" là cái gì hả?!
Dialogue: 0,0:20:00.76,0:20:03.78,Default,mahiro,0000,0000,0000,,Tớ không ngại cho cậu nếm thêm chút đau đớn đâu đấy.
Dialogue: 0,0:20:03.78,0:20:06.13,Default,yoshino,0000,0000,0000,,Làm như vậy Aika-chan sẽ không vui đâu.
Dialogue: 0,0:20:06.52,0:20:08.44,Default,mahiro,0000,0000,0000,,Nó có vui hay không chả liên quan tới tớ...
Dialogue: 0,0:20:08.44,0:20:10.85,Default,mahiro,0000,0000,0000,,Chỉ cần tớ thấy ổn là được.
Dialogue: 0,0:20:11.37,0:20:13.82,Default,yoshino,0000,0000,0000,,Mặc kệ người khác nghĩ gì sao?
Dialogue: 0,0:20:13.82,0:20:16.42,Default,mahiro,0000,0000,0000,,Ờ, tớ không có định thay đổi đâu.
Dialogue: 0,0:20:18.18,0:20:21.86,Default,yoshino,0000,0000,0000,,Có lẽ chính vì vậy mà mọi người mới thấy an tâm khi giao tương lai vào tay cậu.
Dialogue: 0,0:20:22.25,0:20:23.01,Default,mahiro,0000,0000,0000,,Hả?
Dialogue: 0,0:20:23.75,0:20:26.72,Default,mahiro,0000,0000,0000,,Mà cậu không có gì muốn nói với Aika à?
Dialogue: 0,0:20:27.32,0:20:29.79,Default,yoshino,0000,0000,0000,,Những gì cần nói Mahiro đã nói hết rồi.
Dialogue: 0,0:20:30.36,0:20:35.20,Default,yoshino,0000,0000,0000,,Hơn nữa, đối với người yêu thì không cần thiết phải nói bằng lời.
Dialogue: 0,0:20:36.59,0:20:39.70,Default,mahiro,0000,0000,0000,,Aika nói tớ được phép đấm cậu 3 cái nhỉ?
Dialogue: 0,0:20:39.70,0:20:41.60,Default,yoshino,0000,0000,0000,,Ấy ấy này...
Dialogue: 0,0:20:44.77,0:20:47.13,Default,yoshino,0000,0000,0000,,Cậu không định về nhà à?
Dialogue: 0,0:20:47.13,0:20:51.28,Default,mahiro,0000,0000,0000,,Về nhà có làm gì đâu, với cả tối nay tớ có hẹn rồi.
Dialogue: 0,0:20:51.28,0:20:52.38,Default,yoshino,0000,0000,0000,,Có hẹn á?
Dialogue: 0,0:20:52.38,0:20:56.67,Default,mahiro,0000,0000,0000,,Hồi trước tớ có cứu một cô bé trong vụ Hắc Thiết Dịch.{Hồi ep 1 =))}
Dialogue: 0,0:20:57.15,0:20:59.55,Default,mahiro,0000,0000,0000,,Sau đó có trao đổi e-mail...
Dialogue: 0,0:20:59.55,0:21:01.69,Default,yoshino,0000,0000,0000,,Lúc đó mà còn có thời gian trao đổi e-mail á?
Dialogue: 0,0:21:01.69,0:21:04.08,Default,mahiro,0000,0000,0000,,Thì thật sự là như thế mà.
Dialogue: 0,0:21:04.08,0:21:06.37,Default,mahiro,0000,0000,0000,,Cô ta cứ một mực đòi trả ơn tớ.
Dialogue: 0,0:21:07.59,0:21:09.11,Default,mahiro,0000,0000,0000,,Aika cũng nói rồi mà...
Dialogue: 0,0:21:09.11,0:21:11.87,Default,mahiro,0000,0000,0000,,Không cần phải cố níu kéo quá khứ.
Dialogue: 0,0:21:12.47,0:21:15.17,Default,mahiro,0000,0000,0000,,Cậu cũng nên suy nghĩ chuyện với Hakaze đi.
Dialogue: 0,0:21:15.17,0:21:16.04,Default,yoshino,0000,0000,0000,,Cái...
Dialogue: 0,0:21:24.58,0:21:25.76,Default,mahiro,0000,0000,0000,,Giống tuyết thật đấy...
Dialogue: 0,0:21:27.45,0:21:28.48,Default - italics,yoshino,0000,0000,0000,,Tuyết...
Dialogue: 0,0:22:49.17,0:22:52.40,Default,yoshino,0000,0000,0000,,Chúng ta đã đi xa tới vậy...
Dialogue: 0,0:22:53.25,0:22:54.35,Default,mahiro,0000,0000,0000,,Xa?
Dialogue: 0,0:22:54.79,0:22:55.81,Default,mahiro,0000,0000,0000,,Đừng có ngốc.
Dialogue: 0,0:22:56.32,0:22:58.39,Default,,0000,0000,0000,,Đây mới chỉ là bắt đầu thôi.
Dialogue: 0,0:22:59.12,0:23:00.98,Default,mahiro,0000,0000,0000,,Đây mới chính là nơi chúng ta sẽ tiến bước.
Dialogue: 0,0:23:02.89,0:23:03.79,Default,yoshino,0000,0000,0000,,Ra vậy.
Dialogue: 0,0:23:04.74,0:23:05.90,Default,,0000,0000,0000,,Phải rồi.
Dialogue: 0,0:23:12.70,0:23:13.58,Default,mahiro,0000,0000,0000,,Yoshino...
Dialogue: 0,0:23:47.05,0:23:50.86,Default - italics,aika,0000,0000,0000,,Khởi đầu là kết thúc, kết thúc cũng là khởi đầu.
