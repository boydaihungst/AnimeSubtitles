Dialogue: 0,0:24:27.11,0:24:31.12,5-normal,,0,0,0,,{\b1\fs200\bord0\c&H000000&\pos(2181.74,1451.74)}Màu tím là một góc của kí ức
Dialogue: 0,0:00:12.50,0:00:14.54,Dialogue,,0,0,0,,Năm con trong một buổi tối à?
Dialogue: 0,0:00:15.20,0:00:16.20,Dialogue,,0,0,0,,Cũng không tệ.
Dialogue: 0,0:00:16.80,0:00:18.20,Dialogue,,0,0,0,,Vẫn có thể hơn thế nữa.
Dialogue: 0,0:00:18.50,0:00:20.70,Dialogue,,0,0,0,,Mục tiêu của chúng ta\Nlà ngôi làng kia.
Dialogue: 0,0:00:21.40,0:00:24.70,Dialogue,,0,0,0,,Câu chuyện đó, hay ngươi kể cho ta\Nnghe thêm chút nữa đi?
Dialogue: 0,0:00:24.70,0:00:25.30,Dialogue,,0,0,0,,Hửm?
Dialogue: 0,0:00:29.70,0:00:30.63,Dialogue,,0,0,0,,Ông là ai?
Dialogue: 0,0:00:31.50,0:00:33.70,Dialogue,,0,0,0,,Ta là Zen Lẩm Cẩm.
Dialogue: 0,0:00:34.20,0:00:35.02,Dialogue,,0,0,0,,Zen!
Dialogue: 0,0:00:35.40,0:00:36.30,Dialogue,,0,0,0,,Thật vướng víu!
Dialogue: 0,0:00:38.90,0:00:39.76,Dialogue,,0,0,0,,Hửm?
Dialogue: 0,0:00:40.70,0:00:41.50,Dialogue,,0,0,0,,Dừng lại đi.
Dialogue: 0,0:00:42.00,0:00:43.40,Dialogue,,0,0,0,,Vốn dĩ có thể giết được mà.
Dialogue: 0,0:00:51.50,0:00:52.61,Dialogue,,0,0,0,,Đỡ đòn tốt đấy.
Dialogue: 0,0:00:52.61,0:00:53.41,Dialogue,,0,0,0,,Nhưng...
Dialogue: 0,0:01:01.50,0:01:03.30,Dialogue,,0,0,0,,Là Mezami đã xúi dục cậu nhỉ.
Dialogue: 0,0:01:03.50,0:01:04.75,Dialogue,,0,0,0,,Mục đích của cậu là gì?
Dialogue: 0,0:01:25.00,0:01:25.80,Dialogue,,0,0,0,,Hửm?
Dialogue: 0,0:01:28.50,0:01:30.61,Dialogue,,0,0,0,,Tôi ngáp ngủ mất thôi,\Nlão già lẩm cẩm.
Dialogue: 0,0:01:33.30,0:01:34.00,Dialogue,,0,0,0,,Hửm?
Dialogue: 0,0:01:34.30,0:01:35.62,Dialogue,,0,0,0,,Thôi lão dừng đi tôi nhờ.
Dialogue: 0,0:01:55.40,0:01:56.40,Dialogue,,0,0,0,,Ông ta chạy rồi.
Dialogue: 0,0:02:00.70,0:02:02.80,Dialogue,,0,0,0,,Đúng là một lão già không dễ xơi.
Dialogue: 0,0:03:34.00,0:03:36.00,Dialogue,,0,0,0,,Cái bóng không thể né tránh.
Dialogue: 0,0:03:42.67,0:03:44.00,Dialogue,,0,0,0,,Cậu thấy sao?
Dialogue: 0,0:03:44.00,0:03:45.90,Dialogue,,0,0,0,,Một con vật đáng yêu đúng không?
Dialogue: 0,0:03:46.10,0:03:47.70,Dialogue,,0,0,0,,Thật xin lỗi ngài.
Dialogue: 0,0:03:48.00,0:03:49.92,Dialogue,,0,0,0,,Tôi cảm thấy không ổn\Nvới mấy con dã thú.
Dialogue: 0,0:03:50.20,0:03:52.30,Dialogue,,0,0,0,,À, thế thì thứ lỗi cho ta thất lễ.
Dialogue: 0,0:03:52.30,0:03:54.70,Dialogue,,0,0,0,,Nếu thuần phục được\Nthì chúng sẽ rất đáng yêu đấy.
Dialogue: 0,0:03:57.92,0:04:00.40,Dialogue,,0,0,0,,Vậy thì, tiến độ ra sao rồi?
Dialogue: 0,0:04:00.50,0:04:01.90,Dialogue,,0,0,0,,Vẫn thuận lợi ạ.
Dialogue: 0,0:04:02.00,0:04:05.80,Dialogue,,0,0,0,,Chỉ là chẳng hiểu sao\Nlại có một con chó chõ mũi vào.
Dialogue: 0,0:04:06.30,0:04:07.80,Dialogue,,0,0,0,,Hay để tôi giải quyết luôn nhé?
Dialogue: 0,0:04:07.90,0:04:10.00,Dialogue,,0,0,0,,Ngươi không cần can thiệp vào đâu.
Dialogue: 0,0:04:11.30,0:04:15.19,Dialogue,,0,0,0,,Đây là trò chơi giữa ta\Nvà ngài Tsurugi đấy.
Dialogue: 0,0:04:15.80,0:04:18.20,Dialogue,,0,0,0,,Tựa như người thiếu nữ\Nviết lá thư tình,
Dialogue: 0,0:04:18.20,0:04:21.45,Dialogue,,0,0,0,,suy ngẫm về cảm xúc\Ncủa đối phương vậy.
Dialogue: 0,0:04:23.30,0:04:26.00,Dialogue,,0,0,0,,Tại tôi nghĩ nói thế thì sẽ thất lễ\Nvới bên được nhắc đến.
Dialogue: 0,0:04:26.40,0:04:31.09,Dialogue,,0,0,0,,Cậu có biết bây giờ ngài Tsurugi\Nđang bận tâm về cái gì không?
Dialogue: 0,0:04:33.00,0:04:35.90,Dialogue,,0,0,0,,Là vạch trần được âm mưu của ta đấy.
Dialogue: 0,0:04:36.30,0:04:38.40,Dialogue,,0,0,0,,Ngài ấy bị một chú chim nhỏ bé\Nxinh đẹp mời gọi
Dialogue: 0,0:04:38.40,0:04:42.40,Dialogue,,0,0,0,,tựa như một thiếu nữ đang dấn sâu\Nvào trong khu rừng.
Dialogue: 0,0:04:44.00,0:04:45.73,Dialogue,,0,0,0,,Là đầu mối để nhử cô ta sao ạ?
Dialogue: 0,0:04:45.90,0:04:47.10,Dialogue,,0,0,0,,Đúng vậy.
Dialogue: 0,0:04:47.50,0:04:49.00,Dialogue,,0,0,0,,Nếu như Facade...
Dialogue: 0,0:04:49.00,0:04:51.60,Dialogue,,0,0,0,,Nếu như con tốt kia tiếp tục\Nchạy trốn khỏi Zen
Dialogue: 0,0:04:51.60,0:04:55.48,Dialogue,,0,0,0,,thì hẳn ngài Tsurugi sẽ chuyển từ\Nhoài nghi sang tin tưởng thôi.
Dialogue: 0,0:04:55.90,0:04:59.99,Dialogue,,0,0,0,,Trong lúc đó, phe chúng ta sẽ tiến hành\Nnhững bước tiếp theo.
Dialogue: 0,0:04:59.99,0:05:01.30,Dialogue,,0,0,0,,Mưu mẹo thật đấy.
Dialogue: 0,0:05:01.30,0:05:03.60,Dialogue,,0,0,0,,Miễn đáng tin cậy là được.
Dialogue: 0,0:05:03.90,0:05:08.60,Dialogue,,0,0,0,,Nhắc mới nhớ, ta nghe nói\Nđã có một màn ầm ĩ ở thị trấn Archi.
Dialogue: 0,0:05:08.60,0:05:11.70,Dialogue,,0,0,0,,Không biết cậu đây có biết đến không?
Dialogue: 0,0:05:11.80,0:05:15.38,Dialogue,,0,0,0,,À, chỉ là một kế hoạch thất bại\Ndự tính sẽ mang đi tiêu hủy đang càn quấy thôi ạ.
Dialogue: 0,0:05:15.90,0:05:18.20,Dialogue,,0,0,0,,Không nguy hiểm sao?
Dialogue: 0,0:05:18.50,0:05:23.00,Dialogue,,0,0,0,,Vốn dĩ Thể Thực Nghiệm không thể sống sót\Nlâu dài bên ngoài cơ sở rồi.
Dialogue: 0,0:05:23.20,0:05:25.10,Dialogue,,0,0,0,,Vậy thì tốt.
Dialogue: 0,0:05:25.10,0:05:29.60,Dialogue,,0,0,0,,Không thể buông tha cho một con dã thú\Ndám chống đối lại chủ nhân được.
Dialogue: 0,0:05:29.76,0:05:31.50,Dialogue,,0,0,0,,Đúng như ngài nói.
Dialogue: 0,0:05:31.90,0:05:35.30,Dialogue,,0,0,0,,Nếu không tiêu diệt những con dã thú ngu xuẩn\Nthì sau này sẽ thấy tác hại đấy.
Dialogue: 0,0:05:35.30,0:05:38.60,Dialogue,,0,0,0,,Không, chẳng nhất thiết\Nphải tiêu huỷ đâu.
Dialogue: 0,0:05:38.90,0:05:41.60,Dialogue,,0,0,0,,Chỉ là người bề trên và kẻ phục tùng.
Dialogue: 0,0:05:41.60,0:05:44.10,Dialogue,,0,0,0,,Nếu ai cũng biết rõ vị trí\Ncủa bản thân mình
Dialogue: 0,0:05:44.10,0:05:45.91,Dialogue,,0,0,0,,thì thế giới sẽ tốt đẹp hơn.
Dialogue: 0,0:05:49.00,0:05:52.60,Dialogue,,0,0,0,,Cơ mà trông có vẻ là ngài Tsurugi\Nkhông chịu hiểu rồi nhỉ.
Dialogue: 0,0:05:53.90,0:05:54.70,Dialogue,,0,0,0,,Vâng.
Dialogue: 0,0:06:21.60,0:06:22.30,Dialogue,,0,0,0,,Hả?
Dialogue: 0,0:06:22.50,0:06:23.50,Dialogue,,0,0,0,,Tôi đánh thức cậu sao?
Dialogue: 0,0:06:23.50,0:06:24.30,Dialogue,,0,0,0,,Xin lỗi nhé.
Dialogue: 0,0:06:24.30,0:06:26.00,Dialogue,,0,0,0,,Không hổ là sư phụ!
Dialogue: 0,0:06:26.00,0:06:27.50,Dialogue,,0,0,0,,Anh cũng dạy cho em với!
Dialogue: 0,0:06:27.50,0:06:29.00,Dialogue,,0,0,0,,Cậu là Kiếm Sĩ mà?
Dialogue: 0,0:06:29.00,0:06:31.08,Dialogue,,0,0,0,,Bái kẻ dùng giáo là sư phụ\Nthì sao mà được?
Dialogue: 0,0:06:31.40,0:06:36.33,Dialogue,,0,0,0,,Chú Zen đã nói là con đường nếu được tu dưỡng\Nthì sẽ cùng dẫn đến một nơi.
Dialogue: 0,0:06:36.60,0:06:39.50,Dialogue,,0,0,0,,Đồ ngốc,\Nđó là chỉ mấy tên cao thủ thôi.
Dialogue: 0,0:06:45.00,0:06:46.90,Dialogue,,0,0,0,,Vung đường kiếm thẳng lên nữa đi.
Dialogue: 0,0:06:46.90,0:06:48.50,Dialogue,,0,0,0,,Vung đường kiếm sao ạ?
Dialogue: 0,0:06:48.50,0:06:50.00,Dialogue,,0,0,0,,Cậu dồn sức vào quá rồi.
Dialogue: 0,0:06:50.20,0:06:53.10,Dialogue,,0,0,0,,Nếu không vung thẳng kiếm xuống\Nthì đường chém sẽ bị cong đấy.
Dialogue: 0,0:06:53.10,0:06:54.80,Dialogue,,0,0,0,,Cảm ơn anh nhiều.
Dialogue: 0,0:06:57.90,0:06:59.80,Dialogue,,0,0,0,,Sai rồi, không phải thế.
Dialogue: 0,0:07:00.00,0:07:01.00,Dialogue,,0,0,0,,Siết nách lại.
Dialogue: 0,0:07:01.20,0:07:02.70,Dialogue,,0,0,0,,Nắm chặt vào.
Dialogue: 0,0:07:03.20,0:07:05.00,Dialogue,,0,0,0,,Hạ hông xuống nữa.
Dialogue: 0,0:07:05.00,0:07:07.00,Dialogue,,0,0,0,,Cậu dùng sức vào vai hơi quá rồi đấy.
Dialogue: 0,0:07:12.10,0:07:13.20,Dialogue,,0,0,0,,Sư phụ!
Dialogue: 0,0:07:13.20,0:07:15.00,Dialogue,,0,0,0,,Sư phụ thì thôi đi.
Dialogue: 0,0:07:15.50,0:07:16.90,Dialogue,,0,0,0,,Gọi Jiiro là được rồi.
Dialogue: 0,0:07:20.20,0:07:22.20,Dialogue,,0,0,0,,Cảm ơn anh nhiều ạ...
Dialogue: 0,0:07:22.70,0:07:24.20,Dialogue,,0,0,0,,Ơ kìa, sao thế?
Dialogue: 0,0:07:24.20,0:07:24.88,Dialogue,,0,0,0,,Ơ?
Dialogue: 0,0:07:25.60,0:07:26.60,Dialogue,,0,0,0,,Vâng!
Dialogue: 0,0:07:26.70,0:07:29.00,Dialogue,,0,0,0,,Em được anh Jiiro dạy kiếm cho ạ.
Dialogue: 0,0:07:29.00,0:07:29.76,Dialogue,,0,0,0,,Đau!
Dialogue: 0,0:07:31.60,0:07:32.89,Dialogue,,0,0,0,,Thân thiết với nhau quá nhỉ.
Dialogue: 0,0:07:33.00,0:07:34.20,Dialogue,,0,0,0,,Thân gì đâu.
Dialogue: 0,0:07:34.20,0:07:35.80,Dialogue,,0,0,0,,Quyết tâm tốt đấy chứ.
Dialogue: 0,0:07:36.00,0:07:38.30,Dialogue,,0,0,0,,Cậu cố gắng rèn luyện\Nđể trở nên hữu ích hơn đi.
Dialogue: 0,0:07:38.30,0:07:40.89,Dialogue,,0,0,0,,Cô Myaa có phải hơi nghiêm khắc\Nvới tôi rồi không?
Dialogue: 0,0:07:41.10,0:07:44.70,Dialogue,,0,0,0,,Tôi vẫn còn hiền chán với chuyện\Ncho cậu Hấp Tấp ăn mà chỉ thêm tốn cơm thôi đấy.
Dialogue: 0,0:07:44.70,0:07:46.16,Dialogue,,0,0,0,,Quá đáng lắm luôn.
Dialogue: 0,0:07:47.00,0:07:47.70,Dialogue,,0,0,0,,Hở?
Dialogue: 0,0:07:48.66,0:07:50.66,Dialogue,,0,0,0,,Ăn sáng thôi nào!
Dialogue: 0,0:07:53.80,0:07:57.91,Dialogue,,0,0,0,,Chúng tôi xin cảm tạ phúc lành\Ntừ núi non vĩ đại xuyên thủng trời đất.
Dialogue: 0,0:07:58.20,0:07:59.17,Dialogue,,0,0,0,,Xin cảm tạ.
Dialogue: 0,0:08:09.60,0:08:11.20,Dialogue,,0,0,0,,Ngon quá đi!
Dialogue: 0,0:08:11.50,0:08:12.56,Dialogue,,0,0,0,,Cho tôi thêm nữa đi ạ!
Dialogue: 0,0:08:20.30,0:08:21.60,Dialogue,,0,0,0,,Có ngon không?
Dialogue: 0,0:08:21.60,0:08:22.40,Dialogue,,0,0,0,,Ừ.
Dialogue: 0,0:08:22.70,0:08:25.07,Dialogue,,0,0,0,,Đương nhiên chúng tôi phải\Ntiếp đãi du khách rồi.
Dialogue: 0,0:08:25.30,0:08:27.70,Dialogue,,0,0,0,,Đồ ăn vợ tôi nấu là ngon\Nnhất thế giới đó!
Dialogue: 0,0:08:27.70,0:08:29.70,Dialogue,,0,0,0,,Baban, anh làm em ngại đó.
Dialogue: 0,0:08:30.00,0:08:31.90,Dialogue,,0,0,0,,Tôi muốn nghe chuyện\Ntrên đường du hành.
Dialogue: 0,0:08:31.90,0:08:34.08,Dialogue,,0,0,0,,Nhóm Jiiro là những du khách\Nhiếm hoi đến đây đó.
Dialogue: 0,0:08:34.20,0:08:35.00,Dialogue,,0,0,0,,Ừ.
Dialogue: 0,0:08:39.20,0:08:40.90,Dialogue,,0,0,0,,Được rồi, bọn tôi đi đây!
Dialogue: 0,0:08:40.90,0:08:41.58,Dialogue,,0,0,0,,Ừ!
Dialogue: 0,0:08:41.70,0:08:44.09,Dialogue,,0,0,0,,- Cẩn thận nhé!\N- Cố gắng lên!
Dialogue: 0,0:08:51.10,0:08:52.20,Dialogue,,0,0,0,,Cự Thú làm sao?
Dialogue: 0,0:08:52.20,0:08:53.34,Dialogue,,0,0,0,,Năm nay nhiều quá đấy.
Dialogue: 0,0:08:53.80,0:08:56.60,Dialogue,,0,0,0,,Ở những làng khác có con nào\Nmắt đỏ không?
Dialogue: 0,0:08:57.40,0:08:58.30,Dialogue,,0,0,0,,Ừ.
Dialogue: 0,0:08:58.30,0:09:01.60,Dialogue,,0,0,0,,Mấy con mắt đỏ mới bắt đầu\Nxuất hiện từ năm nay thôi.
Dialogue: 0,0:09:01.60,0:09:03.70,Dialogue,,0,0,0,,Cậu có biết chuyện gì không?
Dialogue: 0,0:09:05.00,0:09:07.36,Dialogue,,0,0,0,,Mắt đỏ là lời nguyền cho Người Đồng Bằng.
Dialogue: 0,0:09:07.50,0:09:10.40,Dialogue,,0,0,0,,Đầu đàn của Cự Thú\Nđang ở nơi phương Bắc.
Dialogue: 0,0:09:10.70,0:09:13.24,Dialogue,,0,0,0,,Nó đang từ phương Bắc\Nnhìn vào mọi người.
Dialogue: 0,0:09:13.24,0:09:16.70,Dialogue,,0,0,0,,Người Đồng Bằng ngạo mạn\Nxây nên thị trấn đá.
Dialogue: 0,0:09:16.80,0:09:18.87,Dialogue,,0,0,0,,Đầu đàn của Cự Thú đã nổi giận.
Dialogue: 0,0:09:19.10,0:09:21.20,Dialogue,,0,0,0,,Nhưng mà, không chỉ chúng tôi...
Dialogue: 0,0:09:21.40,0:09:23.40,Dialogue,,0,0,0,,không chỉ mỗi\Nthị trấn của Người Đồng Bằng.
Dialogue: 0,0:09:23.40,0:09:25.70,Dialogue,,0,0,0,,mà cả Người Thú và Người Núi\Ncũng bị tấn công nữa.
Dialogue: 0,0:09:25.70,0:09:27.90,Dialogue,,0,0,0,,Truyền miệng\Nthì cũng chỉ là truyền miệng thôi.
Dialogue: 0,0:09:27.90,0:09:29.38,Dialogue,,0,0,0,,Sự thật ra sao thì chẳng thể biết.
Dialogue: 0,0:09:32.40,0:09:34.39,Dialogue,,0,0,0,,Người Núi rất mạnh mẽ!
Dialogue: 0,0:09:34.60,0:09:37.51,Dialogue,,0,0,0,,Tôi rất vui khi được chiến đấu\Nvới Cự Thú Mắt Đỏ.
Dialogue: 0,0:09:49.40,0:09:50.65,Dialogue,,0,0,0,,Cô nói thử xem.
Dialogue: 0,0:09:50.65,0:09:54.50,Dialogue,,0,0,0,,Cự Thú Mắt Đỏ có thể là do\Nlỗi của em cũng nên.
Dialogue: 0,0:09:54.50,0:09:55.50,Dialogue,,0,0,0,,Tại sao?
Dialogue: 0,0:09:55.50,0:09:58.16,Dialogue,,0,0,0,,Ý em đó là do sức mạnh\Ncủa Kannagi sao?
Dialogue: 0,0:09:58.60,0:10:00.70,Dialogue,,0,0,0,,Khi em giải phóng sương mù đen,
Dialogue: 0,0:10:00.80,0:10:02.70,Dialogue,,0,0,0,,Cự Thú Mắt Đỏ đã xuất hiện.
Dialogue: 0,0:10:03.30,0:10:04.30,Dialogue,,0,0,0,,Thật sao?
Dialogue: 0,0:10:04.30,0:10:05.43,Dialogue,,0,0,0,,Không phải nhìn nhầm chứ?
Dialogue: 0,0:10:06.10,0:10:10.13,Dialogue,,0,0,0,,Đúng thật là khi sức mạnh của Kuumi bùng nổ\Nđã có chướng khí xuất hiện.
Dialogue: 0,0:10:10.20,0:10:12.50,Dialogue,,0,0,0,,Cự Thú Mắt Đỏ cũng tương tự như thế.
Dialogue: 0,0:10:13.80,0:10:17.20,Dialogue,,0,0,0,,Không, có liên quan gì đến\Nnhân hình lúc đó.
Dialogue: 0,0:10:17.20,0:10:17.81,Dialogue,,0,0,0,,Vậy nên...
Dialogue: 0,0:10:18.20,0:10:22.50,Dialogue,,0,0,0,,em nghĩ Cự Thú Mắt Đỏ xuất hiện\Nlà do lỗi của mình.
Dialogue: 0,0:10:22.80,0:10:26.90,Dialogue,,0,0,0,,Cô từ lúc đi du hành,\Nchẳng bùng nổ sức mạnh lần nào cả.
Dialogue: 0,0:10:26.90,0:10:28.46,Dialogue,,0,0,0,,Cũng không giải phóng sương mù đen.
Dialogue: 0,0:10:29.00,0:10:31.50,Dialogue,,0,0,0,,Nếu vậy thì Cự Thú Mắt Đỏ là do\Nmột nguyên nhân khác.
Dialogue: 0,0:10:31.60,0:10:32.32,Dialogue,,0,0,0,,Nhưng mà...
Dialogue: 0,0:10:32.60,0:10:34.10,Dialogue,,0,0,0,,Đừng có lo nữa.
Dialogue: 0,0:10:34.30,0:10:35.94,Dialogue,,0,0,0,,Cứ giao cho tôi là được rồi.
Dialogue: 0,0:10:37.00,0:10:39.33,Dialogue,,0,0,0,,Tôi là Nagimori của cô đấy.
Dialogue: 0,0:10:41.20,0:10:42.30,Dialogue,,0,0,0,,Không sao cả!
Dialogue: 0,0:10:42.30,0:10:45.08,Dialogue,,0,0,0,,Nhất định không phải là lỗi\Ncủa cô Kuumi đâu!
Dialogue: 0,0:10:45.30,0:10:47.59,Dialogue,,0,0,0,,Nếu vậy thì có muốn thử\Nxem sao không?
Dialogue: 0,0:10:47.70,0:10:48.58,Dialogue,,0,0,0,,Hả?
Dialogue: 0,0:10:50.80,0:10:53.10,Dialogue,,0,0,0,,Cự Thú Mắt Đỏ xuất hiện từ đâu?
Dialogue: 0,0:10:53.10,0:10:54.80,Dialogue,,0,0,0,,Chỉ cần làm sáng tỏ chuyện đó là được.
Dialogue: 0,0:10:56.00,0:10:58.34,Dialogue,,0,0,0,,Cự Thú Mắt Đỏ sẽ còn xuất hiện nữa à?
Dialogue: 0,0:10:58.60,0:11:01.31,Dialogue,,0,0,0,,Không, tôi cũng chẳng biết\Nnhưng anh cứ để tôi tìm hiểu đi.
Dialogue: 0,0:11:01.40,0:11:03.35,Dialogue,,0,0,0,,Với cả tôi cũng muốn trả ơn\Nanh đã giúp đỡ.
Dialogue: 0,0:11:06.40,0:11:07.40,Dialogue,,0,0,0,,Nếu vậy thì...
Dialogue: 0,0:11:07.50,0:11:10.40,Dialogue,,0,0,0,,thành lũy phía Đông ở kia\Nthì có tầm nhìn tốt lắm.
Dialogue: 0,0:11:10.40,0:11:12.36,Dialogue,,0,0,0,,Hẳn cũng sẽ dễ tìm thấy Cự Thú nữa.
Dialogue: 0,0:11:12.70,0:11:16.20,Dialogue,,0,0,0,,Hôm nay, Đội Ngũ Cắt Đá\Nxuất hiện ở gần đó.
Dialogue: 0,0:11:16.20,0:11:17.00,Dialogue,,0,0,0,,Ừ.
Dialogue: 0,0:11:17.20,0:11:19.00,Dialogue,,0,0,0,,Người Núi hẳn cũng cần được giúp đỡ.
Dialogue: 0,0:11:19.10,0:11:21.00,Dialogue,,0,0,0,,Baban tôi lát nữa cũng sẽ đi.
Dialogue: 0,0:11:21.00,0:11:22.49,Dialogue,,0,0,0,,Vậy thì đúng ý tôi quá.
Dialogue: 0,0:11:23.10,0:11:26.24,Dialogue,,0,0,0,,Với cả, còn có vật mà vợ tôi yêu cầu nữa.
Dialogue: 0,0:11:28.00,0:11:31.50,Dialogue,,0,0,0,,Đây là hòn đá được hòa trộn bởi những thứ\Nlấy ra từ lông vũ của chim đá.
Dialogue: 0,0:11:31.70,0:11:34.50,Dialogue,,0,0,0,,Để bay qua núi\Nthì dùng cái này sẽ tốt hơn.
Dialogue: 0,0:11:35.90,0:11:36.60,Dialogue,,0,0,0,,Myaa!
Dialogue: 0,0:11:36.70,0:11:37.76,Dialogue,,0,0,0,,Thử lên lửa đi.
Dialogue: 0,0:11:37.91,0:11:39.40,Dialogue,,0,0,0,,Đã rõ.
Dialogue: 0,0:11:47.20,0:11:48.30,Dialogue,,0,0,0,,Có vẻ được đấy.
Dialogue: 0,0:11:48.30,0:11:49.10,Dialogue,,0,0,0,,Ừm!
Dialogue: 0,0:11:49.10,0:11:50.80,Dialogue,,0,0,0,,Nhưng nó sẽ không trụ được lâu đâu.
Dialogue: 0,0:11:50.80,0:11:52.40,Dialogue,,0,0,0,,Giới hạn là một đêm.
Dialogue: 0,0:11:52.40,0:11:53.30,Dialogue,,0,0,0,,Tôi hiểu.
Dialogue: 0,0:11:53.30,0:11:54.20,Dialogue,,0,0,0,,Thế là giúp tôi rồi.
Dialogue: 0,0:11:59.50,0:12:03.00,Dialogue,,0,0,0,,Sương mù đen!
Dialogue: 0,0:12:03.10,0:12:04.60,Dialogue,,0,0,0,,Sương mù đen!
Dialogue: 0,0:12:04.60,0:12:05.70,Dialogue,,0,0,0,,Hấp Tấp!
Dialogue: 0,0:12:05.70,0:12:06.10,Dialogue,,0,0,0,,Hả?
Dialogue: 0,0:12:06.10,0:12:07.60,Dialogue,,0,0,0,,Cậu có nhìn tử tế không đấy?
Dialogue: 0,0:12:07.60,0:12:09.50,Dialogue,,0,0,0,,Đang nhìn đây mà!
Dialogue: 0,0:12:12.30,0:12:14.67,Dialogue,,0,0,0,,Thật có ích quá đấy.
Dialogue: 0,0:12:17.60,0:12:20.70,Dialogue,,0,0,0,,Anh bảo "đúng như ý tôi",\Nvậy là ở thành lũy có cái gì đó hả?
Dialogue: 0,0:12:20.80,0:12:22.43,Dialogue,,0,0,0,,Tôi có linh cảm vậy thôi.
Dialogue: 0,0:12:22.70,0:12:23.30,Dialogue,,0,0,0,,Hả?
Dialogue: 0,0:12:23.30,0:12:24.43,Dialogue,,0,0,0,,Hửm?
Dialogue: 0,0:12:24.99,0:12:26.68,Dialogue,,0,0,0,,Hửm?
Dialogue: 0,0:12:27.99,0:12:28.80,Dialogue,,0,0,0,,Có rồi!
Dialogue: 0,0:12:28.90,0:12:29.80,Dialogue,,0,0,0,,Có rồi! Có rồi!
Dialogue: 0,0:12:29.80,0:12:30.80,Dialogue,,0,0,0,,Có rồi này!
Dialogue: 0,0:12:30.90,0:12:32.40,Dialogue,,0,0,0,,Ở hướng thành lũy phía Đông...
Dialogue: 0,0:12:33.00,0:12:34.60,Dialogue,,0,0,0,,có Cự Thú ạ!
Dialogue: 0,0:12:39.00,0:12:40.60,Dialogue,,0,0,0,,Khoan đã, Hấp Tấp!
Dialogue: 0,0:12:40.60,0:12:42.00,Dialogue,,0,0,0,,Úi trời...
Dialogue: 0,0:12:43.20,0:12:44.40,Dialogue,,0,0,0,,Sao thế?
Dialogue: 0,0:12:45.80,0:12:47.30,Dialogue,,0,0,0,,Mang theo cái này đi!
Dialogue: 0,0:12:47.80,0:12:48.50,Dialogue,,0,0,0,,Hể?
Dialogue: 0,0:12:54.40,0:12:55.22,Dialogue,,0,0,0,,Đây là...
Dialogue: 0,0:12:55.60,0:12:57.50,Dialogue,,0,0,0,,Gãy là phải bồi thường đấy.
Dialogue: 0,0:12:58.70,0:13:00.59,Dialogue,,0,0,0,,Vâng, tôi sẽ dùng cẩn thận!
Dialogue: 0,0:13:01.60,0:13:02.40,Dialogue,,0,0,0,,Meran!
Dialogue: 0,0:13:02.40,0:13:04.48,Dialogue,,0,0,0,,Vào trong thành lũy rồi tập hợp\Nvới đội ngũ đi.
Dialogue: 0,0:13:04.80,0:13:05.60,Dialogue,,0,0,0,,Kuumi.
Dialogue: 0,0:13:05.69,0:13:07.49,Dialogue,,0,0,0,,Chúng ta sẽ đi hướng đỉnh núi.
Dialogue: 0,0:13:07.49,0:13:08.23,Dialogue,,0,0,0,,Hả?
Dialogue: 0,0:13:08.80,0:13:10.73,Dialogue,,0,0,0,,Không phải là hướng thành lũy ạ?
Dialogue: 0,0:13:18.80,0:13:20.00,Dialogue,,0,0,0,,Nhất định lần này...
Dialogue: 0,0:13:20.30,0:13:21.86,Dialogue,,0,0,0,,mình sẽ không để thua đâu!
Dialogue: 0,0:13:38.70,0:13:39.88,Dialogue,,0,0,0,,Hay lắm!
Dialogue: 0,0:13:47.40,0:13:49.40,Dialogue,,0,0,0,,Không được rồi!
Dialogue: 0,0:13:53.00,0:13:54.70,Dialogue,,0,0,0,,Này, Người Thú!
Dialogue: 0,0:13:54.70,0:13:55.65,Dialogue,,0,0,0,,Ở đây nè!
Dialogue: 0,0:14:05.91,0:14:06.90,Dialogue,,0,0,0,,Hửm?
Dialogue: 0,0:14:13.70,0:14:15.20,Dialogue,,0,0,0,,Lễ hội đây rồi!
Dialogue: 0,0:14:15.20,0:14:16.42,Dialogue,,0,0,0,,Đi thôi nào!
Dialogue: 0,0:14:22.20,0:14:24.50,Dialogue,,0,0,0,,Các người đợi ở đây đi.
Dialogue: 0,0:14:24.50,0:14:25.70,Dialogue,,0,0,0,,Rồi, rồi.
Dialogue: 0,0:14:25.80,0:14:27.30,Dialogue,,0,0,0,,Đừng cố quá nhé.
Dialogue: 0,0:14:27.50,0:14:29.70,Dialogue,,0,0,0,,Ở trên này có cái gì vậy?
Dialogue: 0,0:14:29.70,0:14:31.81,Dialogue,,0,0,0,,Có cảm giác là binh lính đấy?
Dialogue: 0,0:14:32.00,0:14:32.90,Dialogue,,0,0,0,,Không phải.
Dialogue: 0,0:14:33.55,0:14:34.80,Dialogue,,0,0,0,,Có cảm giác là Nagimori đấy.
Dialogue: 0,0:14:54.70,0:14:57.45,Dialogue,,0,0,0,,Nguyên nhân khiến bọn Cự Thú có mắt đỏ\Ncó lẽ do các ngươi nhỉ?
Dialogue: 0,0:14:58.70,0:15:00.10,Dialogue,,0,0,0,,Mắt đỏ?
Dialogue: 0,0:15:01.10,0:15:02.40,Dialogue,,0,0,0,,Ta không biết.
Dialogue: 0,0:15:03.10,0:15:05.72,Dialogue,,0,0,0,,Dẫn theo một đám dư thừa đến nhỉ?
Dialogue: 0,0:15:05.72,0:15:06.50,Dialogue,,0,0,0,,Hả?
Dialogue: 0,0:15:07.50,0:15:08.40,Dialogue,,0,0,0,,Jiiro!
Dialogue: 0,0:15:08.50,0:15:09.70,Dialogue,,0,0,0,,Từ bỏ thôi nào!
Dialogue: 0,0:15:11.10,0:15:12.30,Dialogue,,0,0,0,,Facade...
Dialogue: 0,0:15:12.50,0:15:13.47,Dialogue,,0,0,0,,Cậu vẫn còn sống sao?
Dialogue: 0,0:15:14.20,0:15:15.10,Dialogue,,0,0,0,,Ai vậy?
Dialogue: 0,0:15:15.30,0:15:16.40,Dialogue,,0,0,0,,Jiiro đây!
Dialogue: 0,0:15:16.70,0:15:17.60,Dialogue,,0,0,0,,Cậu quên rồi à?
Dialogue: 0,0:15:17.60,0:15:18.73,Dialogue,,0,0,0,,Jiiro Sấm Sét đây!
Dialogue: 0,0:15:18.80,0:15:19.90,Dialogue,,0,0,0,,Không quen.
Dialogue: 0,0:15:19.90,0:15:21.73,Dialogue,,0,0,0,,Nếu ngươi không muốn chết thì biến đi.
Dialogue: 0,0:15:23.70,0:15:25.60,Dialogue,,0,0,0,,Tôi không làm vậy được đâu.
Dialogue: 0,0:15:30.80,0:15:32.30,Dialogue,,0,0,0,,Ngươi là Nagimori sao?
Dialogue: 0,0:15:34.90,0:15:35.87,Dialogue,,0,0,0,,Facade!
Dialogue: 0,0:15:40.20,0:15:41.10,Dialogue,,0,0,0,,Dừng lại đi!
Dialogue: 0,0:15:49.30,0:15:50.50,Dialogue,,0,0,0,,Tại sao vậy?
Dialogue: 0,0:15:54.30,0:15:56.10,Dialogue,,0,0,0,,Cô làm được không, Kuumi?
Dialogue: 0,0:15:56.10,0:15:56.80,Dialogue,,0,0,0,,Vâng!
Dialogue: 0,0:15:57.69,0:16:01.00,Dialogue,,0,0,0,,Hỡi Đấng Sáng Tạo vạn vật\Nđến từ phía bên kia.
Dialogue: 0,0:16:01.40,0:16:05.20,Dialogue,,0,0,0,,Chúng tôi xin hiến dâng thể xác\Ncùng linh hồn này cho người.
Dialogue: 0,0:16:05.70,0:16:07.20,Dialogue,,0,0,0,,Anthrobincia!
Dialogue: 0,0:16:23.00,0:16:24.70,Dialogue,,0,0,0,,Dẫn theo Kannagi à?
Dialogue: 0,0:16:54.10,0:16:56.20,Dialogue,,0,0,0,,Meran, cậu đã trở nên mạnh mẽ rồi.
Dialogue: 0,0:16:56.30,0:16:59.10,Dialogue,,0,0,0,,Nếu Jiiro không thể thì cậu\Nhãy ở lại làng đi.
Dialogue: 0,0:16:59.10,0:17:01.50,Dialogue,,0,0,0,,Hể? K-Không được đâu ạ!
Dialogue: 0,0:17:01.60,0:17:02.50,Dialogue,,0,0,0,,Tại sao?
Dialogue: 0,0:17:02.70,0:17:06.10,Dialogue,,0,0,0,,Bởi vì em mãi mới có thể trở thành\Nđệ tử tốt nhất của anh Jiiro.
Dialogue: 0,0:17:06.30,0:17:08.88,Dialogue,,0,0,0,,Em vẫn còn rất nhiều điều muốn học.
Dialogue: 0,0:17:09.30,0:17:12.00,Dialogue,,0,0,0,,Vậy có phải là hơi hấp tấp rồi không?
Dialogue: 0,0:17:12.20,0:17:13.50,Dialogue,,0,0,0,,Không phải đâu mà!
Dialogue: 0,0:17:13.50,0:17:15.00,Dialogue,,0,0,0,,Không phải em hấp tấp hay gì hết.
Dialogue: 0,0:17:15.00,0:17:16.20,Dialogue,,0,0,0,,Em nghiêm túc đấy ạ!
Dialogue: 0,0:17:17.40,0:17:18.30,Dialogue,,0,0,0,,Hả?
Dialogue: 0,0:17:20.00,0:17:22.00,Dialogue,,0,0,0,,Baban ta đi trước đây!
Dialogue: 0,0:17:22.60,0:17:24.30,Dialogue,,0,0,0,,Hãy dẫn em đi theo với!
Dialogue: 0,0:17:25.30,0:17:26.20,Dialogue,,0,0,0,,Ồ!
Dialogue: 0,0:17:26.20,0:17:28.40,Dialogue,,0,0,0,,Meran quả nhiên là kẻ mạnh nhỉ.
Dialogue: 0,0:17:29.50,0:17:31.40,Dialogue,,0,0,0,,Hãy nắm thật chắc nào!
Dialogue: 0,0:17:41.00,0:17:42.00,Dialogue,,0,0,0,,Facade!
Dialogue: 0,0:17:42.30,0:17:43.40,Dialogue,,0,0,0,,Đã có chuyện gì xảy ra à?
Dialogue: 0,0:17:55.80,0:17:57.80,Dialogue,,0,0,0,,Rốt cuộc đã có chuyện gì?
Dialogue: 0,0:18:11.50,0:18:12.60,Dialogue,,0,0,0,,Yếu quá.
Dialogue: 0,0:18:12.90,0:18:14.70,Dialogue,,0,0,0,,Quả nhiên là phế phẩm.
Dialogue: 0,0:18:15.20,0:18:16.30,Dialogue,,0,0,0,,Kannagi?
Dialogue: 0,0:18:16.80,0:18:17.50,Dialogue,,0,0,0,,Hả?
Dialogue: 0,0:18:22.90,0:18:24.60,Dialogue,,0,0,0,,Phế phẩm.
Dialogue: 0,0:18:24.70,0:18:25.30,Dialogue,,0,0,0,,Hả?
Dialogue: 0,0:18:31.89,0:18:33.20,Dialogue,,0,0,0,,Này, Kuumi!
Dialogue: 0,0:18:36.40,0:18:37.40,Dialogue,,0,0,0,,Gì vậy?
Dialogue: 0,0:18:38.60,0:18:40.22,Dialogue,,0,0,0,,Mình không gượng dậy nổi...
Dialogue: 0,0:18:41.39,0:18:42.22,Dialogue,,0,0,0,,Kia...
Dialogue: 0,0:18:42.80,0:18:44.00,Dialogue,,0,0,0,,Kia là...
Dialogue: 0,0:18:46.50,0:18:47.40,Dialogue,,0,0,0,,Kuumi!
Dialogue: 0,0:18:47.40,0:18:48.60,Dialogue,,0,0,0,,Tỉnh táo lại nào!
Dialogue: 0,0:18:59.60,0:19:00.70,Dialogue,,0,0,0,,Anh Jiiro!
Dialogue: 0,0:19:09.00,0:19:10.46,Dialogue,,0,0,0,,Ngươi đang làm cái gì thế?
Dialogue: 0,0:19:10.70,0:19:13.50,Dialogue,,0,0,0,,Cô cũng giống tôi vậy!
Dialogue: 0,0:19:14.80,0:19:15.96,Dialogue,,0,0,0,,Không giống đâu.
Dialogue: 0,0:19:16.10,0:19:17.50,Dialogue,,0,0,0,,Ở phòng nghiên cứu...
Dialogue: 0,0:19:18.10,0:19:19.50,Dialogue,,0,0,0,,Thể Thực Nghiệm...
Dialogue: 0,0:19:19.70,0:19:21.48,Dialogue,,0,0,0,,Giống nhau đó!
Dialogue: 0,0:19:21.71,0:19:23.30,Dialogue,,0,0,0,,Không giống nhau tí nào.
Dialogue: 0,0:19:26.30,0:19:27.30,Dialogue,,0,0,0,,Hãy dừng lại đi!
Dialogue: 0,0:19:27.30,0:19:28.23,Dialogue,,0,0,0,,Cô sẽ chết đó!
Dialogue: 0,0:19:28.90,0:19:30.40,Dialogue,,0,0,0,,Chết cũng tốt!
Dialogue: 0,0:19:30.50,0:19:32.11,Dialogue,,0,0,0,,Tại sao ta đã không chết chứ?
Dialogue: 0,0:19:32.30,0:19:33.10,Dialogue,,0,0,0,,Đừng mà!
Dialogue: 0,0:19:33.40,0:19:35.80,Dialogue,,0,0,0,,Ngươi, vật phế phẩm...
Dialogue: 0,0:19:35.80,0:19:37.90,Dialogue,,0,0,0,,Ta không giống ngươi!
Dialogue: 0,0:19:39.50,0:19:43.80,Dialogue,,0,0,0,,Ta có chết thì cũng sẽ không giống ngươi!
Dialogue: 0,0:19:49.50,0:19:50.70,Dialogue,,0,0,0,,Anh Baban!
Dialogue: 0,0:19:52.60,0:19:55.20,Dialogue,,0,0,0,,Nhân lúc này,\Nmau dẫn theo Jiiro chạy đi ngay!
Dialogue: 0,0:19:55.40,0:19:58.10,Dialogue,,0,0,0,,Người Đồng Bằng này,\Ncó mùi đến từ phương Bắc!
Dialogue: 0,0:19:58.40,0:20:00.30,Dialogue,,0,0,0,,Các người không thể tránh được đâu!
Dialogue: 0,0:20:00.70,0:20:03.20,Dialogue,,0,0,0,,Mùi... phương Bắc?
Dialogue: 0,0:20:06.70,0:20:08.00,Dialogue,,0,0,0,,Đằng này nè!
Dialogue: 0,0:20:09.40,0:20:11.00,Dialogue,,0,0,0,,Kuumi, nắm chắc nào!
Dialogue: 0,0:20:13.00,0:20:15.11,Dialogue,,0,0,0,,Anh Jiiro, có làm sao không?
Dialogue: 0,0:20:15.50,0:20:16.30,Dialogue,,0,0,0,,Meran.
Dialogue: 0,0:20:16.60,0:20:17.40,Dialogue,,0,0,0,,Kia là...
Dialogue: 0,0:20:17.40,0:20:18.00,Dialogue,,0,0,0,,Hả?
Dialogue: 0,0:20:21.10,0:20:23.50,Dialogue,,0,0,0,,Cô Kuumi...?
Dialogue: 0,0:20:23.90,0:20:25.00,Dialogue,,0,0,0,,Tại sao?
Dialogue: 0,0:20:26.00,0:20:27.87,Dialogue,,0,0,0,,Triển khai toàn lực nào!
Dialogue: 0,0:20:39.00,0:20:41.60,Dialogue,,0,0,0,,Tên Nagimori đó là gì thế?
Dialogue: 0,0:20:41.80,0:20:43.80,Dialogue,,0,0,0,,Là một Người Đồng Bằng mạnh mẽ.
Dialogue: 0,0:20:44.00,0:20:45.64,Dialogue,,0,0,0,,Ngươi cũng mạnh lắm đó.
Dialogue: 0,0:20:53.90,0:20:57.20,Dialogue,,0,0,0,,Người Núi thích những thứ mạnh mẽ!
Dialogue: 0,0:20:58.90,0:21:00.00,Dialogue,,0,0,0,,Ồ.
Dialogue: 0,0:21:00.00,0:21:01.80,Dialogue,,0,0,0,,Đỡ tốn thời gian rồi.
Dialogue: 0,0:21:07.67,0:21:13.17,Dialogue,,0,0,0,,Ta nghe thấy giọng nói của sứ giả\Nđã chờ đợi qua ngàn thu.
Dialogue: 0,0:21:13.30,0:21:16.30,Dialogue,,0,0,0,,Nếu chống đối lại vị Thần\Ncắn nuốt những vì sao
Dialogue: 0,0:21:16.30,0:21:18.50,Dialogue,,0,0,0,,thì tất thảy mọi thứ sẽ hóa thành hư vô.
Dialogue: 0,0:21:22.40,0:21:26.00,Dialogue,,0,0,0,,Hãy dâng lên Thần "Chiếc nhẫn hẹn ước".
Dialogue: 0,0:21:26.00,0:21:28.69,Dialogue,,0,0,0,,Đó chính là minh chứng cho tình bạn.
Dialogue: 0,0:21:29.00,0:21:32.19,Dialogue,,0,0,0,,Xin Thần Ars ban lòng từ bi.
Dialogue: 0,0:21:48.80,0:21:50.70,Dialogue,,0,0,0,,Tên Nagimori chết tiệt kia...
Dialogue: 0,0:21:54.30,0:21:55.33,Dialogue,,0,0,0,,Thế nào rồi?
Dialogue: 0,0:21:55.80,0:21:57.90,Dialogue,,0,0,0,,Không có dấu vết theo đuôi nhỉ.
Dialogue: 0,0:21:58.90,0:22:00.36,Dialogue,,0,0,0,,Có vẻ như bọn chúng đã chạy rồi.
Dialogue: 0,0:22:05.00,0:22:07.34,Dialogue,,0,0,0,,Không còn nghi ngờ gì nữa,\Nđó chính là Facade.
Dialogue: 0,0:22:08.20,0:22:09.20,Dialogue,,0,0,0,,Tại sao?
Dialogue: 0,0:22:11.80,0:22:14.37,Dialogue,,0,0,0,,Nhóm anh Baban sẽ không sao đâu nhỉ?
Dialogue: 0,0:22:15.30,0:22:17.36,Dialogue,,0,0,0,,Có Baban thì chắc chắn không sao đâu.
Dialogue: 0,0:22:17.70,0:22:20.20,Dialogue,,0,0,0,,Đ-Đúng vậy nhỉ?
Dialogue: 0,0:22:20.40,0:22:21.70,Dialogue,,0,0,0,,À này...
Dialogue: 0,0:22:22.10,0:22:24.90,Dialogue,,0,0,0,,Thế thì chúng có mắt đỏ không phải\Nlà lỗi của cô Kuumi rồi nhỉ.
Dialogue: 0,0:22:25.20,0:22:26.30,Dialogue,,0,0,0,,- Ngu ngốc!\N- Ui đau!
Dialogue: 0,0:22:31.20,0:22:32.70,Dialogue,,0,0,0,,Chết cũng tốt!
Dialogue: 0,0:22:32.80,0:22:34.63,Dialogue,,0,0,0,,Tại sao ta đã không chết chứ?
Dialogue: 0,0:22:43.58,0:22:46.09,Dialogue,,0,0,0,,(Còn tiếp)
Dialogue: 0,0:24:16.80,0:24:19.98,Dialogue,,0,0,0,,Một tai nạn tình cờ đã khiến bọn họ\Nđến thăm làng của Người Sừng.
Dialogue: 0,0:24:19.98,0:24:22.48,Dialogue,,0,0,0,,Đây chính là người phụ nữ mà Jiiro yêu,
Dialogue: 0,0:24:22.48,0:24:24.20,Dialogue,,0,0,0,,l à quê hương của Tooka,
Dialogue: 0,0:24:24.20,0:24:26.60,Dialogue,,0,0,0,,một nơi mãi mãi\Nchìm trong giấc ngủ vô tận.
Dialogue: 0,0:24:27.20,0:24:30.30,Dialogue,,0,0,0,,Kì tới: Màu tím là một góc của kí ức.
