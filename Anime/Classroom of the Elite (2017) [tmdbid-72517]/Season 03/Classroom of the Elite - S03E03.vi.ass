Dialogue: 0,0:00:00.00,0:00:01.93,Default,,0000,0000,0000,,
Dialogue: 0,0:00:01.93,0:00:05.86,Default,,0000,0000,0000,,(Càng muốn quên đi, lại càng không thể quên)
Dialogue: 0,0:00:05.86,0:00:11.99,Default,,0000,0000,0000,,(Trích [Morgenröte] của Friedrich Wilhelm Nietzsche)
Dialogue: 0,0:00:15.16,0:00:19.42,Default,,0000,0000,0000,,Mình chưa bao giờ coi bản thân\Nlà người tốt hay người xấu.
Dialogue: 0,0:00:20.58,0:00:22.58,On Top,,0000,0000,0000,,Tài quá đi, Honami-chan.
Dialogue: 0,0:00:20.90,0:00:25.73,Default,,0000,0000,0000,,Từ khi tới trường này, mình đã thề rằng\Ndù có gặp chuyện gì đi nữa...
Dialogue: 0,0:00:22.58,0:00:24.64,On Top,,0000,0000,0000,,Thật tình, đâu tới mức đó.
Dialogue: 0,0:00:24.64,0:00:26.29,On Top,,0000,0000,0000,,Lại khiêm tốn nữa rồi~
Dialogue: 0,0:00:26.40,0:00:28.08,Default,,0000,0000,0000,,Cũng sẽ thẳng thắn đón nhận.
Dialogue: 0,0:00:28.96,0:00:30.71,On Top,,0000,0000,0000,,(Phòng hội học sinh)
Dialogue: 0,0:00:33.41,0:00:34.87,Default,,0000,0000,0000,,Nè, Sakayanagi.
Dialogue: 0,0:00:35.21,0:00:37.06,Default,,0000,0000,0000,,Có chuyện gì vậy, Hội trưởng Nagumo?
Dialogue: 0,0:00:37.63,0:00:41.74,Default,,0000,0000,0000,,Nói thật thì em có thấy phòng hội học sinh\Nlà vô nghĩa không?
Dialogue: 0,0:00:42.25,0:00:44.92,Default,,0000,0000,0000,,Ở phòng karaoke hay chỗ nào khác cũng vậy mà.
Dialogue: 0,0:00:45.94,0:00:48.56,Default,,0000,0000,0000,,Chỗ nào có tôi thì chính là phòng của hội học sinh.
Dialogue: 0,0:00:49.11,0:00:51.11,Default,,0000,0000,0000,,Quan điểm độc đáo thật đấy.
Dialogue: 0,0:00:52.12,0:00:52.76,Default,,0000,0000,0000,,Giờ thì...
Dialogue: 0,0:00:53.42,0:00:56.85,Default,,0000,0000,0000,,Nếu đã không có nguyện vọng\Ntham gia hội học sinh...
Dialogue: 0,0:00:57.54,0:00:58.78,Default,,0000,0000,0000,,Thế thì tới vì chuyện gì?
Dialogue: 0,0:00:59.21,0:01:02.94,Default,,0000,0000,0000,,Để nói chuyện về Ichinose Honami-san,\Nmột thành viên của hội học sinh đó.
Dialogue: 0,0:01:02.94,0:01:04.36,Default,,0000,0000,0000,,Hội trưởng Nagumo à.
Dialogue: 0,0:01:04.99,0:01:05.92,Default,,0000,0000,0000,,Ồ...
Dialogue: 0,0:01:06.59,0:01:09.98,Default,,0000,0000,0000,,Kể từ giờ, tôi sẽ lên kế hoạch tấn công cô ta.
Dialogue: 0,0:01:11.85,0:01:16.20,Default,,0000,0000,0000,,Trong trường hợp xấu nhất\Nthì có thể sẽ phải thôi học...
Dialogue: 0,0:01:16.20,0:01:17.89,Default,,0000,0000,0000,,Nên mong anh hãy lượng thứ.
Dialogue: 0,0:01:18.53,0:01:21.47,Default,,0000,0000,0000,,Bất chấp tôi đã nói là\Nchỉ dừng ở mức độ bắt nạt sao?
Dialogue: 0,0:01:22.09,0:01:25.58,Default,,0000,0000,0000,,Tôi đang muốn được phép mạnh tay một chút...
Dialogue: 0,0:01:26.12,0:01:29.42,Default,,0000,0000,0000,,Cô bé dễ thương đó là người\Nmà tôi đang định chiếm hữu.
Dialogue: 0,0:01:29.63,0:01:32.56,Default,,0000,0000,0000,,Những chuyện ngoài dự đoán\Nvẫn thường xảy ra mà.
Dialogue: 0,0:01:35.62,0:01:37.29,Default,,0000,0000,0000,,Đúng là đứa con gái trơ trẽn.
Dialogue: 0,0:01:39.05,0:01:41.96,Default,,0000,0000,0000,,Những con bướm chưa thể thành chim
Dialogue: 0,0:01:41.96,0:01:45.37,Default,,0000,0000,0000,,Lắc lư đôi cánh như thể bị băm vằm ấy
Dialogue: 0,0:01:45.58,0:01:48.78,Default,,0000,0000,0000,,Chờ đợi khoảnh khắc để vươn vòi
Dialogue: 0,0:01:48.80,0:01:55.44,Default,,0000,0000,0000,,Chào mừng đến với thế giới của những màn đấu trí
Dialogue: 0,0:02:03.86,0:02:07.34,Default,,0000,0000,0000,,Mây trôi mang theo quyết tâm chiến đấu
Dialogue: 0,0:02:07.34,0:02:10.62,Default,,0000,0000,0000,,Những ký hiệu rải rác là những câu đố
Dialogue: 0,0:02:10.62,0:02:15.57,Default,,0000,0000,0000,,Giữa sự nghi kỵ và tình yêu chân thành
Dialogue: 0,0:02:15.57,0:02:17.62,Default,,0000,0000,0000,,Ai sẽ là kẻ thống trị?
Dialogue: 0,0:02:17.62,0:02:19.34,Default,,0000,0000,0000,,Tuyên chiến, chiến tuyến biến động
Dialogue: 0,0:02:19.34,0:02:20.60,Default,,0000,0000,0000,,Chiến lược mưu ma chước quỷ
Dialogue: 0,0:02:20.60,0:02:22.09,Default,,0000,0000,0000,,Điềm tĩnh và sợ hãi đan xen
Dialogue: 0,0:02:22.09,0:02:23.76,Default,,0000,0000,0000,,Tiếng kèn khai mạc cho sự sụp đổ
Dialogue: 0,0:02:23.76,0:02:27.14,Default,,0000,0000,0000,,Ôi, màn kịch rối trắng
Dialogue: 0,0:02:27.14,0:02:28.38,Default,,0000,0000,0000,,Vòng lặp trống rỗng
Dialogue: 0,0:02:28.38,0:02:30.02,Default,,0000,0000,0000,,Tài năng toàn diện thật gò bó
Dialogue: 0,0:02:30.02,0:02:36.25,Default,,0000,0000,0000,,"Tưởng rằng sẽ trở thành một viên đạn tiện dụng sao?"
Dialogue: 0,0:02:36.25,0:02:39.97,Default,,0000,0000,0000,,Trí tuệ sắc bén luôn cô độc
Dialogue: 0,0:02:39.97,0:02:43.26,Default,,0000,0000,0000,,Thắng lợi hay thất bại, tất cả dựa vào thực lực
Dialogue: 0,0:02:43.26,0:02:47.84,Default,,0000,0000,0000,,Nếu con người vô năng nhất cũng cố gắng hết sức
Dialogue: 0,0:02:47.84,0:02:50.01,Default,,0000,0000,0000,,Số phận sẽ thay đổi
Dialogue: 0,0:02:50.01,0:02:53.49,Default,,0000,0000,0000,,Hãy lật đổ những con số, thường thức
Dialogue: 0,0:02:53.49,0:02:55.44,Default,,0000,0000,0000,,Mà tiến về phía ánh sáng
Dialogue: 0,0:02:55.44,0:02:56.73,Default,,0000,0000,0000,,Zugzwang Du-Ra-ta-ta
Dialogue: 0,0:02:56.73,0:02:58.14,Default,,0000,0000,0000,,Nhảy lên, mảnh ghép nhỏ
Dialogue: 0,0:02:58.14,0:03:00.00,Default,,0000,0000,0000,,Zugzwang Du-Ra-ta-ta
Dialogue: 0,0:03:00.00,0:03:01.68,Default,,0000,0000,0000,,Trong lòng bàn tay này
Dialogue: 0,0:03:01.68,0:03:03.81,Default,,0000,0000,0000,,Zugzwang Du-Ra-ta-ta
Dialogue: 0,0:03:04.28,0:03:07.80,Default,,0000,0000,0000,,Dùng tầm nhìn đen trắng ấy mà vươn lên phía trước
Dialogue: 0,0:03:08.91,0:03:09.85,Default,,0000,0000,0000,,Chào buổi sáng~
Dialogue: 0,0:03:09.76,0:03:11.42,On Top,,0000,0000,0000,,Tiết đầu là môn gì nhở?
Dialogue: 0,0:03:10.02,0:03:13.71,Default,,0000,0000,0000,,Vậy là không phải Karuizawa-san có bạn trai mới à?
Dialogue: 0,0:03:11.42,0:03:13.54,On Top,,0000,0000,0000,,Toán, là môn toán đấy.
Dialogue: 0,0:03:13.88,0:03:17.28,Default,,0000,0000,0000,,Bản thân mình đã nghĩ nên có bước tiến đó.
Dialogue: 0,0:03:17.30,0:03:20.68,Default,,0000,0000,0000,,Về phần Yousuke-kun thì dễ làm nũng quá.
Dialogue: 0,0:03:18.93,0:03:20.18,On Top,,0000,0000,0000,,Chào buổi sáng, Kiyotaka-kun.
Dialogue: 0,0:03:20.18,0:03:21.11,On Top,,0000,0000,0000,,Chào buổi sáng.
Dialogue: 0,0:03:21.74,0:03:24.13,Default,,0000,0000,0000,,Quá đỉnh, người lớn ghê~
Dialogue: 0,0:03:24.80,0:03:26.43,Default,,0000,0000,0000,,Ồn ào quá nhỉ.
Dialogue: 0,0:03:27.08,0:03:29.88,Default,,0000,0000,0000,,Hình như Karuizawa-san\Nvà Hirata-kun đã chia tay đó.
Dialogue: 0,0:03:30.28,0:03:33.91,Default,,0000,0000,0000,,Thế nên cả lớp mới nhốn nháo khác thường nhỉ.
Dialogue: 0,0:03:34.26,0:03:37.03,Default,,0000,0000,0000,,Trông cậu có vẻ thân với hai người đó mà.
Dialogue: 0,0:03:37.28,0:03:38.56,Default,,0000,0000,0000,,Không phải đã biết trước à?
Dialogue: 0,0:03:39.07,0:03:41.07,Default,,0000,0000,0000,,Tôi biết làm sao được.
Dialogue: 0,0:03:41.07,0:03:43.16,Default,,0000,0000,0000,,Chuyện riêng tư của người ta mà.
Dialogue: 0,0:03:43.27,0:03:45.27,Default,,0000,0000,0000,,Này, Hirata~
Dialogue: 0,0:03:45.65,0:03:48.23,Default,,0000,0000,0000,,Cậu bị Karuizawa đá rồi à?
Dialogue: 0,0:03:48.74,0:03:49.54,Default,,0000,0000,0000,,Ừ thì.
Dialogue: 0,0:03:49.79,0:03:51.54,Default,,0000,0000,0000,,Đừng lo, đừng lo!
Dialogue: 0,0:03:51.54,0:03:52.41,Default,,0000,0000,0000,,Ơ...?
Dialogue: 0,0:03:53.67,0:03:55.09,Default,,0000,0000,0000,,Yamauchi hãy thôi đi!
Dialogue: 0,0:03:55.17,0:03:57.80,Default,,0000,0000,0000,,Ơ kìa, giai đẹp vừa bị bồ đá đó!?
Dialogue: 0,0:03:57.86,0:03:59.74,Default,,0000,0000,0000,,Phải động viên cậu ấy chứ!
Dialogue: 0,0:04:00.45,0:04:01.36,Default,,0000,0000,0000,,Xin lỗi nhé.
Dialogue: 0,0:04:02.04,0:04:03.78,Default,,0000,0000,0000,,Cậu vô duyên quá rồi đấy!
Dialogue: 0,0:04:03.78,0:04:05.22,Default,,0000,0000,0000,,Buông ra! Chết tiệt...
Dialogue: 0,0:04:05.59,0:04:07.62,Default,,0000,0000,0000,,Tại sao hai người lại vô tư như vậy chứ!?
Dialogue: 0,0:04:07.63,0:04:09.00,Default,,0000,0000,0000,,Vô tư cái gì chứ!
Dialogue: 0,0:04:09.00,0:04:10.82,Default,,0000,0000,0000,,Làm thế chỉ tăng độ trống vắng thôi.
Dialogue: 0,0:04:10.83,0:04:12.06,Default,,0000,0000,0000,,Chán hai người quá đi.
Dialogue: 0,0:04:12.06,0:04:13.22,Default,,0000,0000,0000,,Chào buổi sáng.
Dialogue: 0,0:04:14.57,0:04:16.82,Default,,0000,0000,0000,,Yamauchi Haruki-kun có đây không nhỉ?
Dialogue: 0,0:04:19.69,0:04:21.49,Default,,0000,0000,0000,,Ể!? Có tôi đây.
Dialogue: 0,0:04:22.17,0:04:24.62,Default,,0000,0000,0000,,Liệu cậu có thể bớt chút thời gian\Ncho mình không nhỉ?
Dialogue: 0,0:04:27.15,0:04:28.34,Default,,0000,0000,0000,,Này, buông ra coi.
Dialogue: 0,0:04:28.34,0:04:29.66,Default,,0000,0000,0000,,À... ờ...
Dialogue: 0,0:04:29.82,0:04:31.64,Default,,0000,0000,0000,,Dĩ nhiên là được, đang rảnh mà.
Dialogue: 0,0:04:32.36,0:04:34.20,Default,,0000,0000,0000,,Đ-Đã có chuyện gì vậy!?
Dialogue: 0,0:04:36.04,0:04:40.78,Default,,0000,0000,0000,,Thật ra, mình có chút chuyện\Nmuốn nói với Yamauchi-kun từ lâu rồi.
Dialogue: 0,0:04:41.10,0:04:42.86,Default,,0000,0000,0000,,Thật hả!? Thật của thật của thật luôn á!?
Dialogue: 0,0:04:42.86,0:04:43.97,Default,,0000,0000,0000,,Trông gian ghê...
Dialogue: 0,0:04:44.13,0:04:45.98,Default,,0000,0000,0000,,Nói ở đây thì sẽ ồn ào lắm.
Dialogue: 0,0:04:45.98,0:04:48.14,Default,,0000,0000,0000,,Nên mình sẽ đợi ở bên đó.
Dialogue: 0,0:04:48.98,0:04:50.22,Default,,0000,0000,0000,,Bên đó?
Dialogue: 0,0:04:51.18,0:04:53.10,Default,,0000,0000,0000,,Ấy ấy ấy, không thể nào như thế được!
Dialogue: 0,0:04:53.10,0:04:53.61,On Top,,0000,0000,0000,,Gì chứ!?
Dialogue: 0,0:04:53.10,0:04:54.62,Default,,0000,0000,0000,,Thế là thế nào!?
Dialogue: 0,0:04:54.04,0:04:54.82,On Top,,0000,0000,0000,,Vậy là sao?
Dialogue: 0,0:04:55.23,0:04:56.50,Default,,0000,0000,0000,,Đành vậy.
Dialogue: 0,0:04:56.92,0:04:58.44,Default,,0000,0000,0000,,Xin lỗi nhé, Ike.
Dialogue: 0,0:04:58.62,0:05:00.22,Default,,0000,0000,0000,,Khoan đã, Yamauchi-kun!
Dialogue: 0,0:05:00.57,0:05:01.51,Default,,0000,0000,0000,,Gì thế?
Dialogue: 0,0:05:02.17,0:05:03.30,Default,,0000,0000,0000,,Đây là bẫy.
Dialogue: 0,0:05:03.52,0:05:04.04,Default,,0000,0000,0000,,Hả!?
Dialogue: 0,0:05:04.52,0:05:07.26,Default,,0000,0000,0000,,Cái việc cậu được người ta ngỏ lời\Nđúng là bất thường.
Dialogue: 0,0:05:07.26,0:05:08.80,Default,,0000,0000,0000,,Nói thế là ý gì hả!?
Dialogue: 0,0:05:09.06,0:05:11.70,Default,,0000,0000,0000,,Theo lẽ thường thì nghe câu đó\Nkhác gì bị nhục mạ đâu.
Dialogue: 0,0:05:12.54,0:05:14.01,Default,,0000,0000,0000,,Cậu hãy nghe cho kỹ này.
Dialogue: 0,0:05:14.54,0:05:18.88,Default,,0000,0000,0000,,Tôi chính là vũ khí chết người của lớp này.
Dialogue: 0,0:05:18.88,0:05:19.50,Default,,0000,0000,0000,,Hả?
Dialogue: 0,0:05:22.38,0:05:24.50,Default,,0000,0000,0000,,Thế nên sẽ không sao hết.
Dialogue: 0,0:05:24.51,0:05:27.30,Default,,0000,0000,0000,,Tôi sẽ không nói gì dư thừa nên cứ yên tâm đi!
Dialogue: 0,0:05:27.74,0:05:29.64,Default,,0000,0000,0000,,Sakayanagi-chan~
Dialogue: 0,0:05:33.89,0:05:37.66,Default,,0000,0000,0000,,Sakayanagi-san thật sự thích Yamauchi-kun sao?
Dialogue: 0,0:05:38.35,0:05:40.36,Default,,0000,0000,0000,,Kiyo-pon và Yukimu nghĩ thế nào?
Dialogue: 0,0:05:40.97,0:05:43.26,Default,,0000,0000,0000,,Tớ mù mờ về cái chủ đề đấy lắm.
Dialogue: 0,0:05:43.64,0:05:46.58,Default,,0000,0000,0000,,Trước giờ, hai người đó chưa hề tiếp xúc.
Dialogue: 0,0:05:47.43,0:05:50.12,Default,,0000,0000,0000,,Nên khó mà thành yêu đương ngay được.
Dialogue: 0,0:05:50.69,0:05:52.30,Default,,0000,0000,0000,,Kiyo-pon điềm tĩnh ghê.
Dialogue: 0,0:05:52.94,0:05:56.86,Default,,0000,0000,0000,,Nếu là Hirata-kun thì đã đành,\Nnhưng đây là Yamauchi-kun đấy.
Dialogue: 0,0:05:57.58,0:05:59.08,Default,,0000,0000,0000,,Nói tới Hirata-kun thì...
Dialogue: 0,0:05:59.09,0:06:03.18,Default,,0000,0000,0000,,Mình cũng nghĩ là sẽ có ngày\Ncậu ấy chia tay Karuizawa-san đó.
Dialogue: 0,0:06:03.33,0:06:04.90,Default,,0000,0000,0000,,Ể!? Vậy á?
Dialogue: 0,0:06:04.92,0:06:06.81,Default,,0000,0000,0000,,Thì có hợp nhau đâu.
Dialogue: 0,0:06:07.12,0:06:10.90,Default,,0000,0000,0000,,Trông Hirata-kun giống kiểu sẽ thích\Nmột mỹ nhân trưởng thành hơn cơ.
Dialogue: 0,0:06:11.30,0:06:14.09,Default,,0000,0000,0000,,Mình nghĩ Karuizawa-san cũng dễ thương...
Dialogue: 0,0:06:15.15,0:06:17.28,Default,,0000,0000,0000,,Kiyotaka-kun có thấy vậy không?
Dialogue: 0,0:06:17.44,0:06:18.52,Default,,0000,0000,0000,,Không biết nữa...
Dialogue: 0,0:06:18.93,0:06:22.62,Default,,0000,0000,0000,,Mà vấn đề hiện giờ là\NHirata-kun độc thân rồi đấy.
Dialogue: 0,0:06:22.97,0:06:25.42,Default,,0000,0000,0000,,Nhiều người thích cậu ấy lắm đó.
Dialogue: 0,0:06:25.69,0:06:27.49,Default,,0000,0000,0000,,Là vậy sao...?
Dialogue: 0,0:06:27.54,0:06:29.56,Default,,0000,0000,0000,,Hể~ Cậu không nhận ra à?
Dialogue: 0,0:06:29.96,0:06:33.34,Default,,0000,0000,0000,,Quan trọng hơn là nên chuẩn bị\Ncho kỳ kiểm tra cuối năm đi.
Dialogue: 0,0:06:33.40,0:06:35.95,Default,,0000,0000,0000,,Vì nếu ăn điểm liệt sẽ bị đuổi học đấy.
Dialogue: 0,0:06:36.00,0:06:38.26,Default,,0000,0000,0000,,Ể!? Luôn và ngay tại chỗ này à?
Dialogue: 0,0:06:36.75,0:06:38.26,On Top,,0000,0000,0000,,(Có tin nhắn mới\NNgười gửi: Chưa lưu danh bạ)
Dialogue: 0,0:06:38.26,0:06:39.63,Default,,0000,0000,0000,,Để sau không được sao?
Dialogue: 0,0:06:39.63,0:06:40.75,Default,,0000,0000,0000,,Chủ quan là đại kỵ đấy.
Dialogue: 0,0:06:44.73,0:06:47.06,Default,,0000,0000,0000,,Xin lỗi đã đường đột gọi cậu ra đây.
Dialogue: 0,0:06:48.02,0:06:48.75,Default,,0000,0000,0000,,Không sao.
Dialogue: 0,0:06:49.90,0:06:50.72,Default,,0000,0000,0000,,À thì...
Dialogue: 0,0:06:51.39,0:06:52.88,Default,,0000,0000,0000,,Cứ gọi mình là Mi-chan đi.
Dialogue: 0,0:06:52.88,0:06:54.41,Default,,0000,0000,0000,,Mọi người đều vậy mà.
Dialogue: 0,0:06:55.33,0:06:57.33,Default,,0000,0000,0000,,Phen này độ khó cao ghê...
Dialogue: 0,0:06:58.24,0:06:59.15,Default,,0000,0000,0000,,Hiểu rồi.
Dialogue: 0,0:06:59.60,0:07:01.46,Default,,0000,0000,0000,,Thế cậu có chuyện gì?
Dialogue: 0,0:07:02.06,0:07:02.91,Default,,0000,0000,0000,,Chẳng là...
Dialogue: 0,0:07:03.42,0:07:06.04,Default,,0000,0000,0000,,Mình muốn được cậu kể về Hirata-kun...
Dialogue: 0,0:07:06.48,0:07:07.75,Default,,0000,0000,0000,,Sao lại là tôi?
Dialogue: 0,0:07:08.28,0:07:10.41,Default,,0000,0000,0000,,Cậu ấy và tôi cũng đâu thân lắm.
Dialogue: 0,0:07:10.77,0:07:15.22,Default,,0000,0000,0000,,Nhưng Hirata-kun đã nói\NAyanokouji-kun là đáng tin cậy nhất.
Dialogue: 0,0:07:16.67,0:07:17.84,Default,,0000,0000,0000,,Chẳng là...
Dialogue: 0,0:07:17.84,0:07:21.28,Default,,0000,0000,0000,,Hiện giờ, Hirata-kun có đang thích ai không nhỉ?
Dialogue: 0,0:07:21.98,0:07:23.54,Default,,0000,0000,0000,,Chẳng phải không có sao?
Dialogue: 0,0:07:23.78,0:07:24.83,Default,,0000,0000,0000,,Thật không?
Dialogue: 0,0:07:25.24,0:07:27.32,Default,,0000,0000,0000,,Mặc dù không thể khẳng định là không có...
Dialogue: 0,0:07:27.76,0:07:30.12,Default,,0000,0000,0000,,Nhưng cậu ấy vừa bị Karuizawa đá mà.
Dialogue: 0,0:07:30.57,0:07:32.19,Default,,0000,0000,0000,,Đúng thật...
Dialogue: 0,0:07:33.67,0:07:36.47,Default,,0000,0000,0000,,Ngay cả mình cũng có cơ hội chăng...
Dialogue: 0,0:07:38.71,0:07:39.80,Default,,0000,0000,0000,,Tôi nghĩ là có đó.
Dialogue: 0,0:07:41.48,0:07:42.04,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:07:42.54,0:07:43.37,Default,,0000,0000,0000,,Nhưng gì cơ?
Dialogue: 0,0:07:43.75,0:07:45.65,Default,,0000,0000,0000,,Hirata-kun khá là được nhỉ.
Dialogue: 0,0:07:45.74,0:07:46.34,Default,,0000,0000,0000,,Ừm.
Dialogue: 0,0:07:46.98,0:07:49.76,Default,,0000,0000,0000,,Chính vì thế, về mối quan hệ hẹn hò tiếp theo...
Dialogue: 0,0:07:49.76,0:07:52.04,Default,,0000,0000,0000,,Chắc hẳn cậu ấy sẽ thận trọng lắm đấy.
Dialogue: 0,0:07:53.94,0:07:59.65,Default,,0000,0000,0000,,Biết đâu cậu ấy sẽ cảm thấy có trách nhiệm\Nvì đã không thể khiến Karuizawa hạnh phúc.
Dialogue: 0,0:08:00.37,0:08:02.68,Default,,0000,0000,0000,,Hirata-kun là người tốt bụng mà.
Dialogue: 0,0:08:03.12,0:08:07.49,Default,,0000,0000,0000,,Tôi nghĩ nếu hấp tấp thổ lộ\Nthì sẽ không có kết quả như ý đâu.
Dialogue: 0,0:08:08.40,0:08:09.62,Default,,0000,0000,0000,,Vậy sao...
Dialogue: 0,0:08:10.29,0:08:12.51,Default,,0000,0000,0000,,Tức là cứ chậm mà chắc nhỉ.
Dialogue: 0,0:08:12.51,0:08:13.72,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:08:13.72,0:08:16.02,Default,,0000,0000,0000,,Người cười sau cùng mới là người thắng.
Dialogue: 0,0:08:17.83,0:08:18.36,Default,,0000,0000,0000,,Hử?
Dialogue: 0,0:08:18.64,0:08:19.72,Default,,0000,0000,0000,,Mình ấy nhé.
Dialogue: 0,0:08:19.72,0:08:22.73,Default,,0000,0000,0000,,Có lẽ đã hiểu lầm Ayanokouji-kun một chút đó.
Dialogue: 0,0:08:23.00,0:08:23.96,Default,,0000,0000,0000,,Hiểu lầm?
Dialogue: 0,0:08:24.38,0:08:28.86,Default,,0000,0000,0000,,Vì bình thường cậu ít khi nói chuyện,\Nnên mình cứ ngỡ là đáng sợ lắm cơ.
Dialogue: 0,0:08:29.46,0:08:32.71,Default,,0000,0000,0000,,Nhưng giờ mình đã hiểu lý do\NHirata-kun tin tưởng cậu rồi.
Dialogue: 0,0:08:33.98,0:08:36.14,Default,,0000,0000,0000,,Cậu là người rất dễ trò chuyện đấy chứ.
Dialogue: 0,0:08:36.47,0:08:41.01,Default,,0000,0000,0000,,Thì cậu đã nghiêm túc nghe mình nói mà.
Dialogue: 0,0:08:41.32,0:08:43.40,Default,,0000,0000,0000,,Ô kìa! Không lẽ...
Dialogue: 0,0:08:43.40,0:08:43.95,Default,,0000,0000,0000,,Ơ!?
Dialogue: 0,0:08:44.44,0:08:45.48,Default,,0000,0000,0000,,Hiyori-chan!?
Dialogue: 0,0:08:45.53,0:08:47.59,Default,,0000,0000,0000,,Như này có phải đang hẹn hò không nhỉ?
Dialogue: 0,0:08:47.59,0:08:49.63,Default,,0000,0000,0000,,K-K-Không phải! Không phải đâu!
Dialogue: 0,0:08:49.78,0:08:53.45,Default,,0000,0000,0000,,Vậy thì cho phép mình\Nlàm kỳ đà cản mũi được không?
Dialogue: 0,0:08:53.53,0:08:55.33,Default,,0000,0000,0000,,Ừm, dĩ nhiên là được!
Dialogue: 0,0:08:55.33,0:08:56.83,Default,,0000,0000,0000,,A! Có được không?
Dialogue: 0,0:08:57.34,0:08:57.94,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:08:58.29,0:09:00.87,Default,,0000,0000,0000,,Thế hai người đang nói chuyện gì vậy?
Dialogue: 0,0:09:01.02,0:09:03.71,Default,,0000,0000,0000,,Chuyện thử đi Trung Quốc một chuyến ấy mà.
Dialogue: 0,0:09:04.32,0:09:08.89,Default,,0000,0000,0000,,À! Mi-chan là du học sinh tới từ Trung Quốc nhỉ.
Dialogue: 0,0:09:09.91,0:09:10.99,Default,,0000,0000,0000,,Ơ này...
Dialogue: 0,0:09:11.51,0:09:13.95,Default,,0000,0000,0000,,Hai người là bạn sao?
Dialogue: 0,0:09:14.32,0:09:14.89,Default,,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:09:15.54,0:09:17.01,Default,,0000,0000,0000,,Bạn cùng đọc sách đó.
Dialogue: 0,0:09:17.33,0:09:19.85,Default,,0000,0000,0000,,Ừ thì cũng không sai.
Dialogue: 0,0:09:19.99,0:09:21.29,Default,,0000,0000,0000,,Ra vậy.
Dialogue: 0,0:09:21.41,0:09:25.22,Default,,0000,0000,0000,,Vượt qua ranh giới giữa các lớp\Nđể kết bạn đúng là hay ghê.
Dialogue: 0,0:09:25.22,0:09:26.79,Default,,0000,0000,0000,,Mình cũng nghĩ vậy đó.
Dialogue: 0,0:09:27.40,0:09:31.78,Default,,0000,0000,0000,,Cuộc sống học đường đâu chỉ có quan hệ đối địch.
Dialogue: 0,0:09:38.55,0:09:40.15,Default,,0000,0000,0000,,Xin lỗi vì gọi cậu ra muộn thế này.
Dialogue: 0,0:09:40.74,0:09:42.04,Default,,0000,0000,0000,,Cất công như vậy là sao?
Dialogue: 0,0:09:43.32,0:09:44.98,Default,,0000,0000,0000,,Dùng tin nhắn thì khó nói lắm.
Dialogue: 0,0:09:46.04,0:09:49.46,Default,,0000,0000,0000,,Hôm nay, tôi được tìm tới\Nđể thảo luận hơi bị nhiều luôn đấy.
Dialogue: 0,0:09:50.70,0:09:54.26,Default,,0000,0000,0000,,Đang có những tin đồn kỳ lạ\Nxoay quanh Ichinose-san.
Dialogue: 0,0:10:01.98,0:10:03.09,Default,,0000,0000,0000,,Đồn gì cơ?
Dialogue: 0,0:10:04.20,0:10:06.72,Default,,0000,0000,0000,,Nói ngắn gọn thì kiểu vu khống.
Dialogue: 0,0:10:07.98,0:10:09.65,Default,,0000,0000,0000,,Nội dung cụ thể là gì?
Dialogue: 0,0:10:10.60,0:10:11.65,Default,,0000,0000,0000,,Tôi đã tổng hợp lại rồi.
Dialogue: 0,0:10:15.40,0:10:16.54,Default,,0000,0000,0000,,Ghê thật...
Dialogue: 0,0:10:16.95,0:10:18.36,Default,,0000,0000,0000,,Ác ý lộ rõ luôn.
Dialogue: 0,0:10:18.92,0:10:21.36,Default,,0000,0000,0000,,Nhưng chỉ là những lời đồn vô căn cứ.
Dialogue: 0,0:10:21.92,0:10:24.34,Default,,0000,0000,0000,,Có lẽ mọi người cũng chỉ thấy\Nđây là ghen ăn tức ở thôi...
Dialogue: 0,0:10:25.23,0:10:29.21,Default,,0000,0000,0000,,Dù thế đi nữa, tốc độ lan truyền\Ntrong toàn năm nhất thật sự quá nhanh.
Dialogue: 0,0:10:30.04,0:10:33.97,Default,,0000,0000,0000,,Hẳn có kẻ đang cố tình lan truyền... sao?
Dialogue: 0,0:10:34.72,0:10:36.87,Default,,0000,0000,0000,,Nhóm Kanzaki-kun của lớp B...
Dialogue: 0,0:10:36.87,0:10:39.31,Default,,0000,0000,0000,,Có vẻ đang cho rằng nguồn cơn là lớp A.
Dialogue: 0,0:10:40.21,0:10:43.14,Default,,0000,0000,0000,,Sakayanagi... hoặc là Katsuragi sao...
Dialogue: 0,0:10:43.94,0:10:47.07,Default,,0000,0000,0000,,Tuy nhiên, làm như vậy thì quá lộ liễu...
Dialogue: 0,0:10:48.21,0:10:49.63,Default,,0000,0000,0000,,Đó là điểm khiến tôi chú ý.
Dialogue: 0,0:10:49.96,0:10:54.76,Default,,0000,0000,0000,,Giả sử có đôi phần sự thật\Ntrộn lẫn trong những tin đồn đó thì sao?
Dialogue: 0,0:10:55.30,0:10:57.60,Default,,0000,0000,0000,,Dù những phần khác chỉ là tin thất thiệt,
Dialogue: 0,0:10:57.60,0:11:00.44,Default,,0000,0000,0000,,nhưng chỉ cần làm thế\Nthì tính tin cậy sẽ tăng lên rất nhiều.
Dialogue: 0,0:11:01.14,0:11:03.30,Default,,0000,0000,0000,,Ichinose có phủ nhận chưa?
Dialogue: 0,0:11:03.38,0:11:06.06,Default,,0000,0000,0000,,Chưa, hiện vẫn chưa có động tĩnh gì.
Dialogue: 0,0:11:06.06,0:11:07.50,Default,,0000,0000,0000,,Thế thì phải bàng quan rồi.
Dialogue: 0,0:11:08.24,0:11:10.38,Default,,0000,0000,0000,,Chưa kể đối phương còn là lớp A.
Dialogue: 0,0:11:11.88,0:11:14.26,Default,,0000,0000,0000,,Chúng ta chẳng có lý do gì để xen vào cả.
Dialogue: 0,0:11:15.20,0:11:17.98,Default,,0000,0000,0000,,Còn có nguy cơ bị Ichinose coi là kẻ địch đấy.
Dialogue: 0,0:11:32.96,0:11:35.62,Default,,0000,0000,0000,,Nếu là anh hai... thì sẽ làm gì đây...
Dialogue: 0,0:11:44.03,0:11:47.60,Default,,0000,0000,0000,,Xin lỗi vì muộn thế này\Ncòn gọi cậu tới, Ichinose-san.
Dialogue: 0,0:11:47.95,0:11:49.23,Default,,0000,0000,0000,,Không sao đâu.
Dialogue: 0,0:11:49.63,0:11:51.87,Default,,0000,0000,0000,,Cậu làm vậy cũng vì quan tâm đến mình mà.
Dialogue: 0,0:11:52.72,0:11:54.40,Default,,0000,0000,0000,,Cảm ơn cả Ayanokouji-kun nữa.
Dialogue: 0,0:11:55.28,0:11:58.10,Default,,0000,0000,0000,,Tôi chỉ như quà tặng kèm theo Horikita thôi.
Dialogue: 0,0:11:59.24,0:12:01.17,Default,,0000,0000,0000,,Có phải chuyện về tin đồn không?
Dialogue: 0,0:12:01.62,0:12:02.23,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:12:02.81,0:12:05.61,Default,,0000,0000,0000,,Cậu có đoán ra ai đang lan truyền tin đồn không?
Dialogue: 0,0:12:06.85,0:12:09.12,Default,,0000,0000,0000,,Dù không có bằng chứng chắc chắn nào...
Dialogue: 0,0:12:09.12,0:12:10.89,Default,,0000,0000,0000,,Nhưng chắc là Sakayanagi-san nhỉ?
Dialogue: 0,0:12:11.60,0:12:12.81,Default,,0000,0000,0000,,Tại sao cậu lại nghĩ thế?
Dialogue: 0,0:12:15.28,0:12:16.34,Default,,0000,0000,0000,,Vì cậu ấy...
Dialogue: 0,0:12:17.04,0:12:19.63,Default,,0000,0000,0000,,Đã tuyên chiến với mình chăng...
Dialogue: 0,0:12:22.46,0:12:24.59,Default,,0000,0000,0000,,Chỉ có như vậy thì không đủ thuyết phục nhỉ?
Dialogue: 0,0:12:25.07,0:12:28.57,Default,,0000,0000,0000,,Lớp A đã nhận định lớp B\Nlà đối tượng cần nghiền nát...
Dialogue: 0,0:12:28.97,0:12:32.54,Default,,0000,0000,0000,,Lan truyền những tin đồn vô căn cứ về cậu\Ncó thể gây ra thiệt hại...
Dialogue: 0,0:12:33.23,0:12:34.20,Default,,0000,0000,0000,,Hừm...
Dialogue: 0,0:12:34.39,0:12:36.10,Default,,0000,0000,0000,,Có thật như vậy không nhỉ.
Dialogue: 0,0:12:36.73,0:12:41.21,Default,,0000,0000,0000,,Tiếp nhận tin đồn thế nào\Ntùy thuộc vào mọi người mà.
Dialogue: 0,0:12:42.17,0:12:46.72,Default,,0000,0000,0000,,Mình cho rằng cứ im lặng\Nlà có thể đối phó với Sakayanagi-san.
Dialogue: 0,0:12:47.40,0:12:52.51,Default,,0000,0000,0000,,Như vậy thì cả lớp B và lớp C\Nđều sẽ tránh được thiệt hại không cần thiết.
Dialogue: 0,0:12:53.63,0:12:54.53,Default,,0000,0000,0000,,Cậu mạnh mẽ thật.
Dialogue: 0,0:12:55.30,0:12:57.29,Default,,0000,0000,0000,,Không chỉ nghĩ cho mỗi bản thân,
Dialogue: 0,0:12:57.65,0:12:59.65,Default,,0000,0000,0000,,mà còn cho cả mọi người xung quanh nữa.
Dialogue: 0,0:13:00.21,0:13:02.99,Default,,0000,0000,0000,,Mình không có mẫu mực vậy đâu.
Dialogue: 0,0:13:03.39,0:13:04.17,Default,,0000,0000,0000,,Vậy thì bọn tôi-
Dialogue: 0,0:13:04.17,0:13:06.59,Default,,0000,0000,0000,,Các cậu đừng liều lĩnh dính dáng đến việc này.
Dialogue: 0,0:13:07.59,0:13:11.99,Default,,0000,0000,0000,,Hội Horikita-san đâu cần\Nbản thân bị Sakayanagi nhắm tới.
Dialogue: 0,0:13:12.73,0:13:14.65,Default,,0000,0000,0000,,Thật sự cậu sẽ không sao chứ?
Dialogue: 0,0:13:14.79,0:13:16.40,Default,,0000,0000,0000,,Dĩ nhiên rồi.
Dialogue: 0,0:13:18.66,0:13:20.73,Default,,0000,0000,0000,,Cảm ơn cậu đã lo lắng.
Dialogue: 0,0:13:21.02,0:13:23.03,Default,,0000,0000,0000,,Nhưng mình thật sự không sao đâu mà.
Dialogue: 0,0:13:24.60,0:13:26.01,Default,,0000,0000,0000,,Chuyện hôm nay cảm ơn các cậu.
Dialogue: 0,0:13:26.50,0:13:27.24,Default,,0000,0000,0000,,Vậy nhé.
Dialogue: 0,0:13:33.21,0:13:36.36,Default,,0000,0000,0000,,Nãy tôi cũng nói rồi,\N chúng ta sẽ không làm gì hết.
Dialogue: 0,0:13:37.65,0:13:41.38,Default,,0000,0000,0000,,Nếu nguồn cơn tin đồn là Sakayanagi,\Nthì việc can dự vào...
Dialogue: 0,0:13:41.38,0:13:45.22,Default,,0000,0000,0000,,mà khiến lớp ta thành đối tượng công kích\Nsẽ không hay đâu.
Dialogue: 0,0:13:46.04,0:13:48.06,Default,,0000,0000,0000,,Nếu Ichinose-san bị đánh gục,
Dialogue: 0,0:13:48.06,0:13:50.30,Default,,0000,0000,0000,,thì mục tiêu tiếp theo hẳn sẽ là chúng ta đấy.
Dialogue: 0,0:13:51.11,0:13:53.84,Default,,0000,0000,0000,,Đó là chuyện sau khi cả lớp B bị nghiền nát...
Dialogue: 0,0:13:53.84,0:13:55.51,Default,,0000,0000,0000,,Ngược lại với chúng ta là chuyện tốt.
Dialogue: 0,0:13:55.55,0:13:58.48,Default,,0000,0000,0000,,Nghĩa là Ichinose-san\Ncó gặp phải chuyện gì thì cậu cũng mặc kệ?
Dialogue: 0,0:13:59.56,0:14:01.22,Default,,0000,0000,0000,,Cũng lạnh lùng quá nhỉ?
Dialogue: 0,0:14:02.23,0:14:05.14,Default,,0000,0000,0000,,Không phải đó là lập trường vốn có của cậu sao?
Dialogue: 0,0:14:06.45,0:14:09.14,Default,,0000,0000,0000,,Cậu ấy là đối thủ mà một ngày nào đó\Nchúng ta sẽ phải đánh bại.
Dialogue: 0,0:14:09.85,0:14:11.96,Default,,0000,0000,0000,,Chúng ta có quan hệ cộng tác với cậu ấy.
Dialogue: 0,0:14:12.52,0:14:15.64,Default,,0000,0000,0000,,Ít nhất cho đến khi hạ gục lớp A\Nvà quay ra đối đầu với lớp B.
Dialogue: 0,0:14:15.65,0:14:17.28,Default,,0000,0000,0000,,Đấy chỉ là lý tưởng thôi.
Dialogue: 0,0:14:18.75,0:14:19.62,Default,,0000,0000,0000,,Tôi về đây.
Dialogue: 0,0:14:21.24,0:14:22.46,Default,,0000,0000,0000,,Thế nhé.
Dialogue: 0,0:14:30.44,0:14:30.85,Default,,0000,0000,0000,,Hử?
Dialogue: 0,0:14:32.34,0:14:33.60,Default,,0000,0000,0000,,Cậu vẫn ở đây à?
Dialogue: 0,0:14:35.54,0:14:37.98,Default,,0000,0000,0000,,Hai ta nói chuyện một chút nhé?
Dialogue: 0,0:14:41.81,0:14:43.36,Default,,0000,0000,0000,,Biết phải nói thế nào nhỉ?
Dialogue: 0,0:14:44.75,0:14:46.24,Default,,0000,0000,0000,,Thật sự xin lỗi cậu nhé.
Dialogue: 0,0:14:46.86,0:14:48.22,Default,,0000,0000,0000,,Tại sao lại xin lỗi?
Dialogue: 0,0:14:49.19,0:14:50.88,Default,,0000,0000,0000,,Tin đồn về mình...
Dialogue: 0,0:14:51.34,0:14:54.06,Default,,0000,0000,0000,,Đã khiến cậu phải lo lắng không cần thiết rồi.
Dialogue: 0,0:14:56.22,0:15:00.02,Default,,0000,0000,0000,,Các cậu không cần để ý đến chuyện đó đâu.
Dialogue: 0,0:15:00.99,0:15:04.26,Default,,0000,0000,0000,,Cậu cũng nói vậy với mọi người trong lớp B à?
Dialogue: 0,0:15:04.68,0:15:05.21,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:15:05.74,0:15:07.86,Default,,0000,0000,0000,,Trước khi tin đồn gây ra ảnh hưởng nào đó...
Dialogue: 0,0:15:08.39,0:15:11.01,Default,,0000,0000,0000,,Mình vẫn sẽ giữ vững lập trường.
Dialogue: 0,0:15:13.17,0:15:14.98,Default,,0000,0000,0000,,Chỉ có vậy thôi.
Dialogue: 0,0:15:15.65,0:15:17.29,Default,,0000,0000,0000,,Cảm ơn đã nghe mình giãi bày.
Dialogue: 0,0:15:17.86,0:15:18.76,Default,,0000,0000,0000,,Vậy nhé.
Dialogue: 0,0:15:33.70,0:15:35.20,On Top,,0000,0000,0000,,(Số chưa lưu danh bạ\N...Đang gọi...)
Dialogue: 0,0:15:37.31,0:15:38.09,Default,,0000,0000,0000,,Ai vậy?
Dialogue: 0,0:15:40.48,0:15:42.52,Default,,0000,0000,0000,,Nếu không nói gì thì tôi cúp máy đây.
Dialogue: 0,0:15:43.78,0:15:45.58,Default,,0000,0000,0000,,Ayanokouji Kiyotaka.
Dialogue: 0,0:15:46.99,0:15:48.02,Default,,0000,0000,0000,,Ai vậy?
Dialogue: 0,0:15:52.27,0:15:55.05,Default,,0000,0000,0000,,Vậy tức là đã có hành động sao?
Dialogue: 0,0:15:59.99,0:16:01.13,Default,,0000,0000,0000,,Thứ này là sao?
Dialogue: 0,0:16:01.29,0:16:03.02,Default,,0000,0000,0000,,Ai đã để cái này vào?
Dialogue: 0,0:16:03.06,0:16:04.09,Default,,0000,0000,0000,,Chuyện gì vậy?
Dialogue: 0,0:16:04.49,0:16:05.97,Default,,0000,0000,0000,,Cho tôi xem của cậu một chút đi.
Dialogue: 0,0:16:08.75,0:16:10.51,Default,,0000,0000,0000,,Có chuyện gì sao?
Dialogue: 0,0:16:11.11,0:16:12.15,Default,,0000,0000,0000,,Ayanokouji à?
Dialogue: 0,0:16:12.99,0:16:16.33,Default,,0000,0000,0000,,Có những bức thư lạ lùng\Nđược gửi vào hòm thư của tất cả mọi người.
Dialogue: 0,0:16:17.23,0:16:17.96,Default,,0000,0000,0000,,Đây.
Dialogue: 0,0:16:21.18,0:16:24.03,Default,,0000,0000,0000,,Ichinose Honami là tội phạm.
Dialogue: 0,0:16:24.24,0:16:27.02,Default,,0000,0000,0000,,Tin đồn nhảm nhí đã đến mức này rồi sao?
Dialogue: 0,0:16:27.66,0:16:29.32,Default,,0000,0000,0000,,Nếu đã lộ rõ ra thế này...
Dialogue: 0,0:16:29.32,0:16:31.52,Default,,0000,0000,0000,,Thì nhà trường có lẽ sẽ hành động thôi.
Dialogue: 0,0:16:31.98,0:16:36.18,Default,,0000,0000,0000,,Kẻ đó hẳn cũng phải biết\Nchuyện hiển nhiên như vậy sẽ xảy ra rồi.
Dialogue: 0,0:16:36.40,0:16:39.54,Default,,0000,0000,0000,,Hể?! Vậy nghĩa là cậu đã biết\Nthủ phạm là ai rồi sao?
Dialogue: 0,0:16:40.25,0:16:41.96,Default,,0000,0000,0000,,Nhưng không có bằng chứng.
Dialogue: 0,0:16:42.99,0:16:45.60,Default,,0000,0000,0000,,Nè, cậu không cần phải nhẫn nhịn nữa đâu.
Dialogue: 0,0:16:45.60,0:16:47.14,Default,,0000,0000,0000,,Báo cho giáo viên đi.
Dialogue: 0,0:16:48.05,0:16:49.70,Default,,0000,0000,0000,,Như này thì không thể chấp nhận được.
Dialogue: 0,0:16:49.71,0:16:50.49,Default,,0000,0000,0000,,Phải đó.
Dialogue: 0,0:16:50.49,0:16:52.48,Default,,0000,0000,0000,,Ichinose hoàn toàn là người bị hại mà.
Dialogue: 0,0:16:52.84,0:16:53.98,Default,,0000,0000,0000,,Mình không sao.
Dialogue: 0,0:16:54.20,0:16:57.07,Default,,0000,0000,0000,,Cỡ này thì mình chẳng buồn quan tâm đâu.
Dialogue: 0,0:16:57.23,0:16:58.28,Default,,0000,0000,0000,,Không được đâu!
Dialogue: 0,0:16:58.28,0:17:01.60,Default,,0000,0000,0000,,Cứ thế này thì những tin đồn xấu\Nvề Honami-chan sẽ càng lan truyền mất!
Dialogue: 0,0:17:01.60,0:17:02.23,Default,,0000,0000,0000,,Đúng vậy!
Dialogue: 0,0:17:02.23,0:17:03.82,Default,,0000,0000,0000,,Phải kiên quyết xử lý việc này.
Dialogue: 0,0:17:04.12,0:17:07.40,Default,,0000,0000,0000,,Cứ tiếp diễn thế này thì có thể biến thành\N không thể cứu vãn mất.
Dialogue: 0,0:17:10.84,0:17:12.95,Default,,0000,0000,0000,,Này, tôi có chuyện muốn nói.
Dialogue: 0,0:17:14.82,0:17:16.73,Default,,0000,0000,0000,,Hình như cậu ở lớp A tên là...
Dialogue: 0,0:17:17.08,0:17:18.49,Default,,0000,0000,0000,,Kamuro Masumi.
Dialogue: 0,0:17:22.13,0:17:23.71,Default,,0000,0000,0000,,Một căn phòng vô sắc.
Dialogue: 0,0:17:24.11,0:17:28.25,Default,,0000,0000,0000,,Xông vào cho bằng được,\Nrồi câu đầu tiên thốt ra là thế sao?
Dialogue: 0,0:17:28.87,0:17:30.08,Default,,0000,0000,0000,,Xông vào chỗ nào?
Dialogue: 0,0:17:30.08,0:17:31.66,Default,,0000,0000,0000,,Chính cậu đồng ý kia mà.
Dialogue: 0,0:17:32.43,0:17:34.43,Default,,0000,0000,0000,,Thế tìm tôi có chuyện gì?
Dialogue: 0,0:17:35.09,0:17:37.27,Default,,0000,0000,0000,,Nói ra dài lắm, lấy gì cho tôi uống đi.
Dialogue: 0,0:17:39.62,0:17:41.47,Default,,0000,0000,0000,,Chỉ có trà hoặc cà phê thôi nhé?
Dialogue: 0,0:17:41.87,0:17:42.75,Default,,0000,0000,0000,,Có ca cao không?
Dialogue: 0,0:17:43.41,0:17:43.81,Default,,0000,0000,0000,,Có.
Dialogue: 0,0:17:44.38,0:17:45.57,Default,,0000,0000,0000,,Vậy cho tôi ca cao.
Dialogue: 0,0:17:47.03,0:17:48.95,Default,,0000,0000,0000,,Dù đã đưa ra hai lựa chọn...
Dialogue: 0,0:17:49.30,0:17:51.33,Default,,0000,0000,0000,,Không ngờ cậu ta lại dùng lựa chọn thứ ba.
Dialogue: 0,0:17:57.54,0:17:58.66,Default,,0000,0000,0000,,Không uống sao?
Dialogue: 0,0:17:59.27,0:18:00.96,Default,,0000,0000,0000,,Không lẽ cậu đang cảnh giác tôi?
Dialogue: 0,0:18:01.64,0:18:03.72,Default,,0000,0000,0000,,Không cảnh giác mới là lạ đấy.
Dialogue: 0,0:18:04.36,0:18:06.06,Default,,0000,0000,0000,,Một nữ sinh gần như mới gặp lần đầu...
Dialogue: 0,0:18:06.06,0:18:09.84,Default,,0000,0000,0000,,Lại còn là người lớp A\Nxông vào hẳn phòng riêng thế này kia mà...
Dialogue: 0,0:18:10.53,0:18:13.66,Default,,0000,0000,0000,,Cậu đúng là khác với Yamauchi.
Dialogue: 0,0:18:15.24,0:18:18.06,Default,,0000,0000,0000,,Cậu nghĩ sao về bức thư\Nchỉ trích Ichinose vừa nãy?
Dialogue: 0,0:18:18.68,0:18:19.80,Default,,0000,0000,0000,,Không quan tâm.
Dialogue: 0,0:18:20.30,0:18:22.90,Default,,0000,0000,0000,,Không quan tâm thì chí ít\Ncũng phải có cảm nghĩ chứ?
Dialogue: 0,0:18:23.92,0:18:26.70,Default,,0000,0000,0000,,Việc Ichinose là người tốt hay người xấu...
Dialogue: 0,0:18:27.50,0:18:30.51,Default,,0000,0000,0000,,Có là tội phạm cũng chưa chắc là người xấu.
Dialogue: 0,0:18:30.92,0:18:34.16,Default,,0000,0000,0000,,Sakayanagi đang nắm thóp bí mật của Ichinose.
Dialogue: 0,0:18:34.72,0:18:35.96,Default,,0000,0000,0000,,Vậy sao?
Dialogue: 0,0:18:35.96,0:18:37.14,Default,,0000,0000,0000,,Tôi nói trước nhé.
Dialogue: 0,0:18:37.50,0:18:41.34,Default,,0000,0000,0000,,Sakayanagi không biết về việc\Ntôi đến đây nói chuyện với cậu.
Dialogue: 0,0:18:42.28,0:18:44.31,Default,,0000,0000,0000,,Nếu biết hẳn sẽ giận lắm đấy.
Dialogue: 0,0:18:44.94,0:18:46.94,Default,,0000,0000,0000,,Tiếc là tôi không tin đâu.
Dialogue: 0,0:18:50.16,0:18:54.75,Default,,0000,0000,0000,,Thế nên, tôi sẽ cho cậu biết\Nbí mật mà Ichinose đang che giấu.
Dialogue: 0,0:18:57.38,0:18:58.93,Default,,0000,0000,0000,,Nhưng trước đó thì...
Dialogue: 0,0:18:58.98,0:19:02.11,Default,,0000,0000,0000,,Lý do tôi bị Sakayanagi sử dụng như tay sai...
Dialogue: 0,0:19:02.69,0:19:04.57,Default,,0000,0000,0000,,Cũng cần nói với cậu nhỉ?
Dialogue: 0,0:19:07.58,0:19:09.32,Default,,0000,0000,0000,,Đó là hồi sau lễ nhập học.
Dialogue: 0,0:19:18.75,0:19:19.89,Default,,0000,0000,0000,,Xin hãy đợi đã.
Dialogue: 0,0:19:23.23,0:19:24.18,Default,,0000,0000,0000,,Vừa rồi...
Dialogue: 0,0:19:25.36,0:19:27.22,Default,,0000,0000,0000,,Cậu đã ăn trộm đúng không?
Dialogue: 0,0:19:31.84,0:19:33.54,Default,,0000,0000,0000,,Thế thì làm sao hả?
Dialogue: 0,0:19:33.88,0:19:36.17,Default,,0000,0000,0000,,Đôi tay nhanh nhẹn đó thật xuất sắc.
Dialogue: 0,0:19:36.62,0:19:37.88,Default,,0000,0000,0000,,Tôi sẽ trả lại!
Dialogue: 0,0:19:38.26,0:19:38.88,Default,,0000,0000,0000,,Đây.
Dialogue: 0,0:19:39.96,0:19:42.18,Default,,0000,0000,0000,,Cậu uống đồ có cồn sao?
Dialogue: 0,0:19:42.66,0:19:45.10,Default,,0000,0000,0000,,Tôi không quan tâm đến rượu bia gì.
Dialogue: 0,0:19:45.68,0:19:46.62,Default,,0000,0000,0000,,Vậy nghĩa là...
Dialogue: 0,0:19:46.62,0:19:51.56,Default,,0000,0000,0000,,Hành động đó chỉ để trải nghiệm\Ncảm giác kịch tính phải không?
Dialogue: 0,0:19:51.94,0:19:54.31,Default,,0000,0000,0000,,Thích thì cứ báo với nhà trường đi.
Dialogue: 0,0:19:56.62,0:19:58.68,Default,,0000,0000,0000,,Thứ này để mình xử lý vậy.
Dialogue: 0,0:19:59.92,0:20:02.73,Default,,0000,0000,0000,,Nếu cậu không báo với nhà trường\Nthì tôi sẽ tự làm.
Dialogue: 0,0:20:04.66,0:20:06.21,Default,,0000,0000,0000,,Tôi thích cậu rồi đấy.
Dialogue: 0,0:20:06.46,0:20:07.93,Default,,0000,0000,0000,,Kamuro Masumi-san.
Dialogue: 0,0:20:08.80,0:20:12.42,Default,,0000,0000,0000,,Mình sẽ biến cậu\Nthành người bạn đầu tiên của mình.
Dialogue: 0,0:20:16.20,0:20:18.74,Default,,0000,0000,0000,,Tôi từng thường xuyên ăn trộm.
Dialogue: 0,0:20:19.22,0:20:20.09,Default,,0000,0000,0000,,Từng?
Dialogue: 0,0:20:20.46,0:20:22.46,Default,,0000,0000,0000,,Giờ thì không rảnh đến mức đấy.
Dialogue: 0,0:20:22.46,0:20:24.88,Default,,0000,0000,0000,,Tôi đang bị Sakayanagi sử dụng như tay sai.
Dialogue: 0,0:20:25.46,0:20:27.40,Default,,0000,0000,0000,,Thế nên cậu mới bám lấy tôi à?
Dialogue: 0,0:20:27.65,0:20:28.68,Default,,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:20:29.52,0:20:32.16,Default,,0000,0000,0000,,Bí mật của Ichinose cũng giống như tôi.
Dialogue: 0,0:20:32.63,0:20:35.28,Default,,0000,0000,0000,,Quá khứ từng ăn trộm vặt sao...
Dialogue: 0,0:20:35.66,0:20:37.60,Default,,0000,0000,0000,,Dù cậu ấy nổi tiếng như vậy đó.
Dialogue: 0,0:20:39.04,0:20:40.80,Default,,0000,0000,0000,,Thế nên cậu hãy ngăn Sakayanagi lại đi.
Dialogue: 0,0:20:41.38,0:20:43.18,Default,,0000,0000,0000,,Cậu có thể đúng không?
Dialogue: 0,0:20:43.64,0:20:45.20,Default,,0000,0000,0000,,Tại sao lại là tôi?
Dialogue: 0,0:20:46.04,0:20:49.46,Default,,0000,0000,0000,,Tôi chẳng thể nào nói chuyện với bất kỳ ai...
Dialogue: 0,0:20:50.27,0:20:54.48,Default,,0000,0000,0000,,Với lại, người mà Sakayanagi\Ncảnh giác nhất chính là cậu.
Dialogue: 0,0:20:54.48,0:20:56.18,Default,,0000,0000,0000,,Thật vinh hạnh làm sao.
Dialogue: 0,0:20:56.78,0:20:58.60,Default,,0000,0000,0000,,Nhưng mà tôi vẫn không tin.
Dialogue: 0,0:20:58.86,0:20:59.63,Default,,0000,0000,0000,,Tại sao?
Dialogue: 0,0:21:00.07,0:21:03.16,Default,,0000,0000,0000,,Có thể Sakayanagi dùng cậu như tốt thí,
Dialogue: 0,0:21:03.16,0:21:05.90,Default,,0000,0000,0000,,để lôi kéo tôi đứng ra quyết đấu một trận mà.
Dialogue: 0,0:21:07.72,0:21:08.72,Default,,0000,0000,0000,,Nếu vậy...
Dialogue: 0,0:21:09.28,0:21:10.68,Default,,0000,0000,0000,,Tôi sẽ chứng minh cho cậu.
Dialogue: 0,0:21:18.26,0:21:18.86,Default,,0000,0000,0000,,Đây.
Dialogue: 0,0:21:24.20,0:21:25.98,Default,,0000,0000,0000,,Đúng là hàng thật.
Dialogue: 0,0:21:26.40,0:21:27.40,Default,,0000,0000,0000,,Dĩ nhiên rồi.
Dialogue: 0,0:21:28.01,0:21:31.88,Default,,0000,0000,0000,,Học sinh vốn không thể\Nmua đồ chỉ dành cho người lớn.
Dialogue: 0,0:21:33.73,0:21:36.16,Default,,0000,0000,0000,,Giờ thì đành phải tin cậu rồi.
Dialogue: 0,0:21:36.99,0:21:38.36,Default,,0000,0000,0000,,Vậy thì tốt rồi.
Dialogue: 0,0:21:38.76,0:21:39.74,Default,,0000,0000,0000,,Nhờ cậu cả đấy.
Dialogue: 0,0:21:40.38,0:21:42.44,Default,,0000,0000,0000,,Còn cái này thì cậu cầm về đi.
Dialogue: 0,0:21:43.37,0:21:44.21,Default,,0000,0000,0000,,Này cậu!
Dialogue: 0,0:21:49.62,0:21:51.62,On Top,,0000,0000,0000,,(Horikita Manabu\N...Đang gọi...)
Dialogue: 0,0:21:52.92,0:21:53.78,Default,,0000,0000,0000,,Chuyện gì thế?
Dialogue: 0,0:21:54.68,0:21:55.66,Default,,0000,0000,0000,,Ayanokouji.
Dialogue: 0,0:21:56.93,0:21:59.08,Default,,0000,0000,0000,,Tôi nghĩ phải nói với cậu việc này.
Dialogue: 0,0:22:00.66,0:22:02.33,Default,,0000,0000,0000,,Kushida Kikyou...
Dialogue: 0,0:22:03.80,0:22:06.25,Default,,0000,0000,0000,,Có vẻ đã tiếp xúc với Nagumo Miyabi.
Dialogue: 0,0:22:08.64,0:22:09.65,Default,,0000,0000,0000,,Tôi biết rồi.
Dialogue: 0,0:22:10.48,0:22:13.29,Default,,0000,0000,0000,,Everybody, Up and Down
Dialogue: 0,0:22:13.29,0:22:16.31,Default,,0000,0000,0000,,Nhận biết khí thế, Bad End Girl
Dialogue: 0,0:22:16.31,0:22:17.86,Default,,0000,0000,0000,,Hey Yo! Hey Yo!
Dialogue: 0,0:22:17.86,0:22:21.41,Default,,0000,0000,0000,,Sự thật＝Khác với tiểu thuyết
Dialogue: 0,0:22:22.08,0:22:23.80,Default,,0000,0000,0000,,Toan tính vụ lợi tầm thường
Dialogue: 0,0:22:23.80,0:22:25.30,Default,,0000,0000,0000,,Cấu thành tư duy lý tưởng
Dialogue: 0,0:22:25.30,0:22:28.70,Default,,0000,0000,0000,,Học hỏi tiền nhân, xoay chuyển dị điểm
Dialogue: 0,0:22:28.70,0:22:29.87,Default,,0000,0000,0000,,Dựa vào A, B, C, D
Dialogue: 0,0:22:29.87,0:22:31.33,Default,,0000,0000,0000,,Winner - Loser
Dialogue: 0,0:22:31.33,0:22:34.27,Default,,0000,0000,0000,,Chi tiết thì cứ dựa vào xếp hạng
Dialogue: 0,0:22:34.27,0:22:35.60,Default,,0000,0000,0000,,Ý nghĩa của việc tồn tại
Dialogue: 0,0:22:35.60,0:22:37.19,Default,,0000,0000,0000,,Cảm giác ngạt thở
Dialogue: 0,0:22:37.19,0:22:38.84,Default,,0000,0000,0000,,Bắt đầu từ dưới đáy
Dialogue: 0,0:22:38.84,0:22:40.74,Default,,0000,0000,0000,,Khác biệt cá tính
Dialogue: 0,0:22:40.74,0:22:43.56,Default,,0000,0000,0000,,Đành như vậy? Đành như vậy? Đành như vậy sao?
Dialogue: 0,0:22:43.56,0:22:45.60,Default,,0000,0000,0000,,Chỉ số giới hạn của DNA?
Dialogue: 0,0:22:46.46,0:22:49.32,Default,,0000,0000,0000,,Đáp án bất bình đẳng (All right)
Dialogue: 0,0:22:49.32,0:22:52.34,Default,,0000,0000,0000,,Không đánh gục nó thì chẳng thể đi tiếp
Dialogue: 0,0:22:52.34,0:22:55.48,Default,,0000,0000,0000,,Tiến triển lãng mạn (Oh my god)
Dialogue: 0,0:22:55.48,0:22:58.32,Default,,0000,0000,0000,,Chẳng có gì ngọt ngào như vậy đâu
Dialogue: 0,0:22:58.32,0:23:01.34,Default,,0000,0000,0000,,Sự thật là cá lớn nuốt cá bé
Dialogue: 0,0:23:01.34,0:23:04.32,Default,,0000,0000,0000,,Nguyên tắc quan trọng là sự áp đảo
Dialogue: 0,0:23:04.32,0:23:10.68,Default,,0000,0000,0000,,Ôi, ta đã nhận ra từ lâu rồi kia mà
Dialogue: 0,0:23:11.76,0:23:15.00,Default,,0000,0000,0000,,Đáp án bất bình đẳng (All right)
Dialogue: 0,0:23:15.00,0:23:17.82,Default,,0000,0000,0000,,Nếu từ bỏ thì sẽ chẳng thể thay đổi
