Dialogue: 0,0:00:00.00,0:00:01.89,Default,,0000,0000,0000,,
Dialogue: 0,0:00:01.89,0:00:05.81,Default,,0000,0000,0000,,(Vận mệnh sẽ ưu ái người dũng cảm)
Dialogue: 0,0:00:05.81,0:00:11.99,Default,,0000,0000,0000,,(Trích [Aeneis] của Vergilius)
Dialogue: 0,0:00:13.18,0:00:16.34,Default,,0000,0000,0000,,Đừng có lan truyền\Nmấy cái tin đồn kỳ quái, Hashimoto!
Dialogue: 0,0:00:16.36,0:00:20.57,Default,,0000,0000,0000,,Tôi biết thừa cậu theo lệnh của Sakayanagi\Ntung tin đồn thất thiệt rồi đấy.
Dialogue: 0,0:00:20.57,0:00:22.87,Default,,0000,0000,0000,,Hãy dừng lại đi, Ibuki-san!
Dialogue: 0,0:00:22.87,0:00:24.68,Default,,0000,0000,0000,,Cậu lui xuống đi!
Dialogue: 0,0:00:24.68,0:00:27.55,Default,,0000,0000,0000,,Còn làm tới thì không thể xin lỗi là xong đâu.
Dialogue: 0,0:00:28.26,0:00:29.85,Default,,0000,0000,0000,,Định làm thật đấy à?
Dialogue: 0,0:00:30.18,0:00:31.60,Default,,0000,0000,0000,,Này, dừng lại mau!
Dialogue: 0,0:00:31.60,0:00:32.43,Default,,0000,0000,0000,,Giữ cậu ấy lại!
Dialogue: 0,0:00:32.43,0:00:34.52,Default,,0000,0000,0000,,Người không liên quan đừng có xen vào!
Dialogue: 0,0:00:34.52,0:00:37.73,Default,,0000,0000,0000,,Về vụ bị tung tin đồn thì giống Ayanokouji đấy.
Dialogue: 0,0:00:37.73,0:00:39.00,Default,,0000,0000,0000,,Đâu phải không liên quan.
Dialogue: 0,0:00:39.00,0:00:42.58,Default,,0000,0000,0000,,Nhưng vụ thích Karuizawa nghe cũng dễ thương mà.
Dialogue: 0,0:00:43.30,0:00:45.54,Default,,0000,0000,0000,,K-Không dễ thương gì hết!
Dialogue: 0,0:00:46.03,0:00:48.40,Default,,0000,0000,0000,,Tôi không muốn phải nói ra câu này đâu...
Dialogue: 0,0:00:48.90,0:00:52.08,Default,,0000,0000,0000,,Nhưng tôi cũng nghi ngờ cậu đấy, Hashimoto.
Dialogue: 0,0:00:52.08,0:00:53.46,Default,,0000,0000,0000,,Cũng đúng thôi.
Dialogue: 0,0:00:53.71,0:00:57.18,Default,,0000,0000,0000,,Chỉ mình tôi thấy cậu và Karuizawa\Nbí mật gặp nhau mà.
Dialogue: 0,0:00:57.68,0:00:58.86,Default,,0000,0000,0000,,Bí mật gặp nhau!?
Dialogue: 0,0:00:59.07,0:01:00.86,Default,,0000,0000,0000,,Không phải làm chuyện xấu gì đâu.
Dialogue: 0,0:01:02.14,0:01:04.42,Default,,0000,0000,0000,,Chắc chắn là mày làm rồi!
Dialogue: 0,0:01:04.42,0:01:06.74,Default,,0000,0000,0000,,Ishizaki-kun, không được đánh nhau.
Dialogue: 0,0:01:06.79,0:01:08.36,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:01:08.36,0:01:12.73,Default,,0000,0000,0000,,Dù có bắt cậu ấy tự thú tại đây,\Nthì Sakayanagi-san cũng không nhận đâu.
Dialogue: 0,0:01:13.16,0:01:15.10,Default,,0000,0000,0000,,Tức là đành bó tay sao!?
Dialogue: 0,0:01:16.04,0:01:19.41,Default,,0000,0000,0000,,Chuyện hôm nay có thể bỏ qua như này không?
Dialogue: 0,0:01:19.97,0:01:23.14,Default,,0000,0000,0000,,Tôi cũng đâu có bị thương hay gì\Nmà phải bỏ qua cho các cậu.
Dialogue: 0,0:01:23.87,0:01:24.96,Default,,0000,0000,0000,,Tuy nhiên...
Dialogue: 0,0:01:24.96,0:01:28.31,Default,,0000,0000,0000,,Từ nay, đừng có bất cẩn nghi ngờ chúng tôi nữa.
Dialogue: 0,0:01:28.76,0:01:31.39,Default,,0000,0000,0000,,Bị vướng vào mà\Nchẳng có bằng chứng gì thì phiền lắm.
Dialogue: 0,0:01:32.37,0:01:33.61,Default,,0000,0000,0000,,Mình hiểu rồi.
Dialogue: 0,0:01:34.58,0:01:35.60,Default,,0000,0000,0000,,Chúng ta đi thôi.
Dialogue: 0,0:01:36.09,0:01:36.94,Default,,0000,0000,0000,,Chậc!
Dialogue: 0,0:01:49.24,0:01:52.93,Default,,0000,0000,0000,,Cuối cùng Ichinose-san cũng tới trường à.
Dialogue: 0,0:01:53.50,0:01:56.19,Default,,0000,0000,0000,,Vừa kịp đợt kiểm tra nhỉ.
Dialogue: 0,0:01:56.71,0:01:58.48,Default,,0000,0000,0000,,Thế cậu tính sao đây?
Dialogue: 0,0:02:04.38,0:02:05.15,Default,,0000,0000,0000,,Tốt!
Dialogue: 0,0:02:05.96,0:02:07.24,Default,,0000,0000,0000,,Tất cả đều đạt.
Dialogue: 0,0:02:09.18,0:02:12.66,Default,,0000,0000,0000,,Oa, Kyo-pon được 90 điểm đúng là ghê gớm mà.
Dialogue: 0,0:02:12.66,0:02:15.82,Default,,0000,0000,0000,,Thì mọi người... cũng như vậy mà.
Dialogue: 0,0:02:17.37,0:02:18.06,Default,,0000,0000,0000,,Này!
Dialogue: 0,0:02:18.69,0:02:21.76,Default,,0000,0000,0000,,Đám lớp A đang kéo vào lớp B đấy!
Dialogue: 0,0:02:28.48,0:02:30.84,Default,,0000,0000,0000,,Đến có chuyện gì vậy, Sakayanagi-san?
Dialogue: 0,0:02:32.26,0:02:37.56,Default,,0000,0000,0000,,Bấy lâu nay, mình luôn thán phục\Ntinh thần đồng đội của lớp B.
Dialogue: 0,0:02:37.95,0:02:39.10,Default,,0000,0000,0000,,Ý cậu là gì?
Dialogue: 0,0:02:40.82,0:02:43.75,Default,,0000,0000,0000,,Mình tới để cứu giúp các bạn đó.
Dialogue: 0,0:02:45.32,0:02:47.04,Default,,0000,0000,0000,,Đủ rồi, vào chuyện chính đi.
Dialogue: 0,0:02:47.85,0:02:51.49,Default,,0000,0000,0000,,Số điểm cá nhân lưu trữ ở chỗ Ichinose-san...
Dialogue: 0,0:02:51.49,0:02:55.42,Default,,0000,0000,0000,,được sử dụng như tiềm lực kinh tế,\Nlàm chỗ dựa để cả lớp vượt qua hiểm cảnh...
Dialogue: 0,0:02:55.82,0:02:57.49,Default,,0000,0000,0000,,Chính là chuyện mình muốn nói.
Dialogue: 0,0:02:57.89,0:02:59.64,Default,,0000,0000,0000,,Chuyện đó thì có vấn đề gì?
Dialogue: 0,0:02:59.89,0:03:03.10,Default,,0000,0000,0000,,Bản chất của chuyện đó không có gì sai trái cả.
Dialogue: 0,0:03:05.37,0:03:06.62,Default,,0000,0000,0000,,Tuy nhiên...
Dialogue: 0,0:03:06.62,0:03:11.03,Default,,0000,0000,0000,,Nếu nội dung của những cáo buộc này\Nlà sự thật thì sao nhỉ...
Dialogue: 0,0:03:11.74,0:03:15.11,Default,,0000,0000,0000,,Ngộ nhỡ Ichinose-san đúng là tội phạm thì...
Dialogue: 0,0:03:15.55,0:03:17.04,Default,,0000,0000,0000,,Nhảm nhí.
Dialogue: 0,0:03:17.04,0:03:20.46,Default,,0000,0000,0000,,Nó giống như mấy tin đồn khác\Nđược mấy người lan truyền thôi.
Dialogue: 0,0:03:20.46,0:03:23.35,Default,,0000,0000,0000,,Những chuyện đó mình không biết,\Ncũng không liên quan.
Dialogue: 0,0:03:24.06,0:03:26.06,Default,,0000,0000,0000,,Cái mà mình đang nắm giữ...
Dialogue: 0,0:03:26.52,0:03:30.46,Default,,0000,0000,0000,,Là bằng chứng đáng tin cậy liên quan tới\Ntin đồn về Ichinose-san đấy.
Dialogue: 0,0:03:30.46,0:03:31.93,Default,,0000,0000,0000,,Có bằng chứng sao...
Dialogue: 0,0:03:31.93,0:03:33.86,Default,,0000,0000,0000,,- Thật đấy à?\N- Thế là thế nào?
Dialogue: 0,0:03:34.80,0:03:36.41,Default,,0000,0000,0000,,Mọi người bình tĩnh đi!
Dialogue: 0,0:03:36.80,0:03:42.92,Default,,0000,0000,0000,,Gửi gắm điểm của lớp cho người như vậy\Nthì khác gì chọn con đường diệt vong đâu nhỉ?
Dialogue: 0,0:03:44.20,0:03:47.06,Default,,0000,0000,0000,,Những gì mình nói có đúng không nhỉ?
Dialogue: 0,0:03:47.76,0:03:49.46,Default,,0000,0000,0000,,Ichinose Honami-san.
Dialogue: 0,0:03:53.07,0:03:55.28,Default,,0000,0000,0000,,Cậu có thể tránh ra một chút không?
Dialogue: 0,0:03:55.72,0:03:56.53,Default,,0000,0000,0000,,Ichinose!?
Dialogue: 0,0:03:57.08,0:03:58.49,Default,,0000,0000,0000,,Sẽ không sao đâu.
Dialogue: 0,0:04:07.68,0:04:09.42,Default,,0000,0000,0000,,Xin lỗi mọi người!
Dialogue: 0,0:04:13.22,0:04:14.97,Default,,0000,0000,0000,,Mọi người trật tự đi nào.
Dialogue: 0,0:04:15.63,0:04:18.25,Default,,0000,0000,0000,,Có vẻ cậu ấy đang thú nhận đó.
Dialogue: 0,0:04:21.57,0:04:22.46,Default,,0000,0000,0000,,Mọi người...
Dialogue: 0,0:04:23.32,0:04:27.16,Default,,0000,0000,0000,,Có thể lắng nghe...\Ncâu chuyện của mình một chút không?
Dialogue: 0,0:04:28.76,0:04:30.90,Default,,0000,0000,0000,,Đúng như Sakayanagi-san nói...
Dialogue: 0,0:04:31.34,0:04:33.31,Default,,0000,0000,0000,,Mình từng phạm tội...
Dialogue: 0,0:04:34.91,0:04:36.57,Default,,0000,0000,0000,,Một tội lỗi không thể dung thứ...
Dialogue: 0,0:04:42.01,0:04:45.01,On Top,,0000,0000,0000,,(4 năm trước)
Dialogue: 0,0:04:46.13,0:04:51.22,Default,,0000,0000,0000,,Ngày trước, mình từng sống\Nmột nhà ba người với mẹ và em gái.
Dialogue: 0,0:04:52.73,0:04:54.52,Default,,0000,0000,0000,,Tuy không khá giả gì...
Dialogue: 0,0:04:55.06,0:04:56.18,Default,,0000,0000,0000,,Nhưng thật sự rất vui...
Dialogue: 0,0:04:59.60,0:05:06.03,Default,,0000,0000,0000,,Mẹ mình vì hai chị em...\Nđã cố gắng... cố gắng rất nhiều...
Dialogue: 0,0:05:08.03,0:05:10.03,On Top,,0000,0000,0000,,(1 năm trước)
Dialogue: 0,0:05:13.72,0:05:17.94,Default,,0000,0000,0000,,Chính vì thế, để có thể\Nhọc lên cao mà không tốn tiền...
Dialogue: 0,0:05:17.94,0:05:21.26,Default,,0000,0000,0000,,bản thân mình đã không ngừng theo đuổi\Nvị trí học sinh đặc biệt.
Dialogue: 0,0:05:29.98,0:05:30.85,Default,,0000,0000,0000,,Thế rồi...
Dialogue: 0,0:05:33.08,0:05:35.29,Default,,0000,0000,0000,,Vào mùa hè của năm ba trung học...
Dialogue: 0,0:05:42.26,0:05:43.32,Default,,0000,0000,0000,,Mẹ mình...
Dialogue: 0,0:05:44.72,0:05:46.56,Default,,0000,0000,0000,,Đã ngã quỵ...
Dialogue: 0,0:05:49.22,0:05:52.14,Default,,0000,0000,0000,,Hình như vì muốn mua\Nquà sinh nhật cho em mình...
Dialogue: 0,0:05:52.66,0:05:54.71,Default,,0000,0000,0000,,Mẹ đã tăng ca quá sức...
Dialogue: 0,0:05:57.41,0:06:00.36,Default,,0000,0000,0000,,Một cái kẹp tóc...
Dialogue: 0,0:06:01.70,0:06:04.58,Default,,0000,0000,0000,,Được nữ thần tượng em ấy yêu thích đeo...
Dialogue: 0,0:06:06.77,0:06:11.72,Default,,0000,0000,0000,,Em gái mình chưa từng nói\Nmuốn game hay đồ thời trang bao giờ...
Dialogue: 0,0:06:13.14,0:06:17.50,Default,,0000,0000,0000,,Cô em gái ấy của mình...\Nđã lần đầu nói muốn thứ gì đó...
Dialogue: 0,0:06:24.04,0:06:25.06,Default,,0000,0000,0000,,Mẹ mình đã...
Dialogue: 0,0:06:25.54,0:06:28.68,Default,,0000,0000,0000,,"Xin lỗi vì đã không thể tặng con quà sinh nhật."
Dialogue: 0,0:06:28.98,0:06:30.23,Default,,0000,0000,0000,,"Xin lỗi con."
Dialogue: 0,0:06:30.56,0:06:32.73,Default,,0000,0000,0000,,Mẹ đã liên tục xin lỗi em ấy như vậy.
Dialogue: 0,0:06:34.78,0:06:36.30,Default,,0000,0000,0000,,Thế nên mình đã hạ quyết tâm...
Dialogue: 0,0:06:36.98,0:06:42.28,Default,,0000,0000,0000,,Phải mua bằng được cái kẹp tóc đó cho em gái.
Dialogue: 0,0:06:47.05,0:06:48.57,Default,,0000,0000,0000,,Cho dù vẫn biết rằng...
Dialogue: 0,0:06:48.89,0:06:51.73,Default,,0000,0000,0000,,Trên đời này làm gì có chỗ nào...
Dialogue: 0,0:06:52.66,0:06:54.13,Default,,0000,0000,0000,,Thuê học sinh trung học làm thêm...
Dialogue: 0,0:06:54.13,0:06:56.60,Default,,0000,0000,0000,,(Không nhận học sinh trung học)
Dialogue: 0,0:06:56.85,0:07:00.75,Default,,0000,0000,0000,,Dẫu vậy, mình vẫn nhất quyết\Nphải gom được tiền.
Dialogue: 0,0:07:02.07,0:07:02.83,Default,,0000,0000,0000,,Nhưng rồi...
Dialogue: 0,0:07:07.61,0:07:09.82,Default,,0000,0000,0000,,(Lần nhập hàng cuối cùng\NCơ hội cuối cùng)
Dialogue: 0,0:07:17.36,0:07:19.31,Default,,0000,0000,0000,,Oa, dễ thương quá đi mất!
Dialogue: 0,0:07:19.31,0:07:21.33,Default,,0000,0000,0000,,A! Đây là mẫu được đăng trên tạp chí đó!
Dialogue: 0,0:07:21.33,0:07:23.35,Default,,0000,0000,0000,,- Công nhận!\N- Đúng là muốn quá đi mất!
Dialogue: 0,0:07:23.35,0:07:24.66,Default,,0000,0000,0000,,Tuyệt quá đi~
Dialogue: 0,0:07:24.66,0:07:26.53,Default,,0000,0000,0000,,Nè, mai lại tới nhỉ?
Dialogue: 0,0:07:26.53,0:07:27.46,Default,,0000,0000,0000,,Phải đó.
Dialogue: 0,0:07:27.46,0:07:29.45,Default,,0000,0000,0000,,Hôm nay không mua được thì để mai...
Dialogue: 0,0:07:35.60,0:07:37.85,Default,,0000,0000,0000,,(Cơ hội cuối cùng)
Dialogue: 0,0:07:38.86,0:07:43.05,Default,,0000,0000,0000,,Mình đã muốn có cái kẹp tóc ấy bằng mọi giá.
Dialogue: 0,0:07:57.80,0:07:59.81,Default,,0000,0000,0000,,Không một ai phát hiện ra...
Dialogue: 0,0:08:01.74,0:08:04.07,Default,,0000,0000,0000,,Mình đã nói dối rằng...
Dialogue: 0,0:08:04.74,0:08:07.54,Default,,0000,0000,0000,,Được bạn bè nhượng lại...
Dialogue: 0,0:08:11.16,0:08:13.74,Default,,0000,0000,0000,,Em gái mình đã rất vui mừng.
Dialogue: 0,0:08:14.52,0:08:18.12,Default,,0000,0000,0000,,Và cảm ơn mình không biết bao nhiêu lần.
Dialogue: 0,0:08:20.21,0:08:22.19,Default,,0000,0000,0000,,Khi ngắm nhìn nụ cười của em gái...
Dialogue: 0,0:08:22.53,0:08:26.48,Default,,0000,0000,0000,,Dường như cảm giác tội lỗi vơi đi phần nào.
Dialogue: 0,0:08:28.80,0:08:33.16,Default,,0000,0000,0000,,Vào ngày mẹ xuất viện,\Nhai chị em đã đến đón...
Dialogue: 0,0:08:35.10,0:08:39.86,Default,,0000,0000,0000,,Em mình đã vui mừng mà khoe\Ncái kẹp tóc với mẹ.
Dialogue: 0,0:08:41.04,0:08:44.42,Default,,0000,0000,0000,,Mình đã chẳng thể nói với em ấy\N"Hãy giữ bí mật nhé!"...
Dialogue: 0,0:08:45.42,0:08:47.91,Default,,0000,0000,0000,,Vì em ấy đã vui sướng đến vậy mà.
Dialogue: 0,0:08:54.14,0:08:58.58,Default,,0000,0000,0000,,Dường như mẹ nhận ra mình đã ăn trộm nó.
Dialogue: 0,0:08:59.24,0:09:01.12,Default,,0000,0000,0000,,Mình đã chẳng thể che giấu gì cả...
Dialogue: 0,0:09:03.99,0:09:08.31,Default,,0000,0000,0000,,Ngay lập tức mình đã bị\Nmẹ lôi đến cửa tiệm để xin lỗi.
Dialogue: 0,0:09:09.00,0:09:10.08,Default,,0000,0000,0000,,Mình...
Dialogue: 0,0:09:10.08,0:09:13.68,Default,,0000,0000,0000,,Cuối cùng đã nhận thức được\Nviệc bản thân đã làm.
Dialogue: 0,0:09:16.23,0:09:20.59,Default,,0000,0000,0000,,Sau khi trở về nhà, mẹ mình bắt đầu\Nòa khóc như sợi chỉ căng bị đứt.
Dialogue: 0,0:09:22.15,0:09:27.05,Default,,0000,0000,0000,,Đó chính là lần đầu tiên\Nmình thật sự thấy mẹ khóc.
Dialogue: 0,0:09:29.59,0:09:30.95,Default,,0000,0000,0000,,Rốt cuộc...
Dialogue: 0,0:09:30.95,0:09:34.87,Default,,0000,0000,0000,,Nhân viên của cửa tiệm\Nđã không tố cáo mình với cảnh sát.
Dialogue: 0,0:09:36.93,0:09:39.04,Default,,0000,0000,0000,,Mình đã tự nhốt bản thân lại.
Dialogue: 0,0:09:39.65,0:09:42.45,Default,,0000,0000,0000,,Suốt nửa năm chỉ toàn tự trách...
Dialogue: 0,0:09:43.77,0:09:46.16,Default,,0000,0000,0000,,Mà không thể cất một bước ra khỏi phòng.
Dialogue: 0,0:10:08.71,0:10:12.35,Default,,0000,0000,0000,,Nhưng mà... mẹ mình đã nói rằng...
Dialogue: 0,0:10:10.00,0:10:15.23,On Top,,0000,0000,0000,,(Mẹ muốn con tự nắm lấy hạnh phúc của mình,\Nđừng từ bỏ việc học lên cao trung nhé.)
Dialogue: 0,0:10:15.23,0:10:18.29,Default,,0000,0000,0000,,"Honami nhất định phải học tiếp."
Dialogue: 0,0:10:19.89,0:10:23.69,Default,,0000,0000,0000,,"Con phải tự nắm lấy hạnh phúc."
Dialogue: 0,0:10:37.27,0:10:38.08,Default,,0000,0000,0000,,Thế nên...
Dialogue: 0,0:10:39.13,0:10:42.07,Default,,0000,0000,0000,,Mình đã định làm lại mọi thứ ở ngôi trường này...
Dialogue: 0,0:10:43.13,0:10:48.07,Default,,0000,0000,0000,,Cũng vì muốn lấy lại niềm tin của mẹ và em gái.
Dialogue: 0,0:10:52.64,0:10:53.78,Default,,0000,0000,0000,,Mọi người...
Dialogue: 0,0:10:54.56,0:10:57.11,Default,,0000,0000,0000,,Mình xin lỗi vì bấy lâu nay\Nkhông thể kể chuyện này...
Dialogue: 0,0:10:58.04,0:10:59.62,Default,,0000,0000,0000,,Vì mình là một thủ lĩnh thảm hại...
Dialogue: 0,0:11:00.63,0:11:01.59,Default,,0000,0000,0000,,Xin lỗi!
Dialogue: 0,0:11:02.65,0:11:04.44,Default,,0000,0000,0000,,Không có chuyện đó đâu, Ichinose.
Dialogue: 0,0:11:05.86,0:11:08.11,Default,,0000,0000,0000,,Bọn tôi có thể hiểu cảm xúc của cậu.
Dialogue: 0,0:11:08.18,0:11:13.53,Default,,0000,0000,0000,,Honami-chan lúc này đây đã tin tưởng\Nmà tiết lộ bí mật với bọn mình đúng không nào?
Dialogue: 0,0:11:15.46,0:11:16.15,Default,,0000,0000,0000,,Mọi người...
Dialogue: 0,0:11:18.14,0:11:20.25,Default,,0000,0000,0000,,Có thể dừng tấu hài được không?
Dialogue: 0,0:11:21.13,0:11:22.21,Default,,0000,0000,0000,,Sakayanagi-san?
Dialogue: 0,0:11:23.07,0:11:26.41,Default,,0000,0000,0000,,Dù sự tình có thế nào,\Nthì ăn trộm vẫn là ăn trộm.
Dialogue: 0,0:11:27.09,0:11:29.29,Default,,0000,0000,0000,,Làm gì có chuyện thông cảm cho được.
Dialogue: 0,0:11:30.64,0:11:32.76,Default,,0000,0000,0000,,Đúng là vậy...
Dialogue: 0,0:11:33.52,0:11:37.12,Default,,0000,0000,0000,,Tội lỗi đã phạm phải sẽ không bao giờ biến mất.
Dialogue: 0,0:11:37.68,0:11:38.53,Default,,0000,0000,0000,,Ichinose...
Dialogue: 0,0:11:39.47,0:11:42.56,Default,,0000,0000,0000,,Đúng là mình từng ăn trộm.
Dialogue: 0,0:11:43.85,0:11:45.58,Default,,0000,0000,0000,,Mình sẽ không trốn tránh việc đó.
Dialogue: 0,0:11:46.39,0:11:47.56,Default,,0000,0000,0000,,Bởi vì...
Dialogue: 0,0:11:48.39,0:11:51.03,Default,,0000,0000,0000,,Mình đã làm một điều tệ hại...
Dialogue: 0,0:11:51.42,0:11:54.42,Default,,0000,0000,0000,,Lật cái mặt buồn tủi\Nthành trơ trẽn nhanh thật đấy.
Dialogue: 0,0:11:55.18,0:11:55.75,Default,,0000,0000,0000,,Ừm.
Dialogue: 0,0:11:56.49,0:12:00.15,Default,,0000,0000,0000,,Có thể tất cả những nỗ lực của mình\Nchỉ là đạo đức giả.
Dialogue: 0,0:12:01.49,0:12:02.85,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:12:02.85,0:12:06.25,Default,,0000,0000,0000,,Mình vẫn muốn cùng cả lớp tốt nghiệp!
Dialogue: 0,0:12:06.81,0:12:09.17,Default,,0000,0000,0000,,Mình muốn đi tiếp cùng mọi người!
Dialogue: 0,0:12:10.25,0:12:15.64,Default,,0000,0000,0000,,Dù mình là một kẻ như vậy thì mọi người\Ncó sẵn lòng theo mình đến cùng không?
Dialogue: 0,0:12:16.20,0:12:17.20,Default,,0000,0000,0000,,Dĩ nhiên rồi.
Dialogue: 0,0:12:17.51,0:12:19.31,Default,,0000,0000,0000,,Dĩ nhiên là sẽ theo cậu chứ sao nữa!
Dialogue: 0,0:12:19.53,0:12:20.53,Default,,0000,0000,0000,,Hiển nhiên là vậy!
Dialogue: 0,0:12:20.53,0:12:21.01,Default,,0000,0000,0000,,Chuẩn!
Dialogue: 0,0:12:26.59,0:12:27.63,Default,,0000,0000,0000,,Đáng nể thật.
Dialogue: 0,0:12:28.59,0:12:31.57,Default,,0000,0000,0000,,Sakayanagi, giờ tính sao?
Dialogue: 0,0:12:34.64,0:12:35.64,Default,,0000,0000,0000,,Nè, coi kìa!
Dialogue: 0,0:12:36.34,0:12:37.86,Default,,0000,0000,0000,,Hóa ra là vậy.
Dialogue: 0,0:12:37.86,0:12:40.05,Default,,0000,0000,0000,,Cậu đã tẩy não mọi người thành công rồi nhỉ?
Dialogue: 0,0:12:40.98,0:12:44.65,Default,,0000,0000,0000,,Nhưng việc cậu từng phạm tội vẫn là sự thật.
Dialogue: 0,0:12:45.28,0:12:47.63,Default,,0000,0000,0000,,Vụ việc này sẽ còn lan rộng đó.
Dialogue: 0,0:12:48.35,0:12:49.81,Default,,0000,0000,0000,,Mình đã chuẩn bị tinh thần rồi.
Dialogue: 0,0:12:50.16,0:12:51.29,Default,,0000,0000,0000,,Vậy sao?
Dialogue: 0,0:12:51.96,0:12:53.42,Default,,0000,0000,0000,,Thế thì mình sẽ triệt để nghiền-
Dialogue: 0,0:12:53.42,0:12:54.40,Default,,0000,0000,0000,,Nào!
Dialogue: 0,0:12:54.96,0:12:56.05,Default,,0000,0000,0000,,Tới đó thôi.
Dialogue: 0,0:12:56.32,0:12:59.19,Default,,0000,0000,0000,,Hội trưởng Hội học sinh... và các thầy cô giáo?
Dialogue: 0,0:12:59.94,0:13:04.21,Default,,0000,0000,0000,,Kể từ hôm nay sẽ cấm tung tin đồn mập mờ.
Dialogue: 0,0:13:04.79,0:13:10.20,Default,,0000,0000,0000,,Ichinose-san đã tự mình báo cáo\Nbản thân đang bị làm phiền hay gì chưa ạ?
Dialogue: 0,0:13:10.54,0:13:14.65,Default,,0000,0000,0000,,Chuyện này không còn là vấn đề\Ncủa riêng Ichinose nữa rồi.
Dialogue: 0,0:13:14.80,0:13:17.01,Default,,0000,0000,0000,,Chúng tôi đã xác nhận\Ngiữa các học sinh năm nhất...
Dialogue: 0,0:13:17.01,0:13:20.34,Default,,0000,0000,0000,,đang xảy ra những hành vi trả đũa vu khống.
Dialogue: 0,0:13:21.54,0:13:25.52,Default,,0000,0000,0000,,Những lời đồn này còn tiếp diễn\Nsẽ làm loạn nề nếp trong trường.
Dialogue: 0,0:13:26.63,0:13:32.08,Default,,0000,0000,0000,,Cô thông báo, kể từ bây giờ, người tung tin đồn\Nthất thiệt vô nghĩa sẽ là đối tượng bị xử phạt.
Dialogue: 0,0:13:34.00,0:13:34.92,Default,,0000,0000,0000,,Ra vậy.
Dialogue: 0,0:13:35.53,0:13:39.31,Default,,0000,0000,0000,,Nếu như nhà trường đã hành động\Nthì không cần nhiều lời nữa.
Dialogue: 0,0:13:40.35,0:13:41.73,Default,,0000,0000,0000,,Bỏ qua lần này đi vậy.
Dialogue: 0,0:13:54.33,0:13:55.85,Default,,0000,0000,0000,,Xử lý rất xuất sắc...
Dialogue: 0,0:13:56.38,0:13:57.45,Default,,0000,0000,0000,,Ayanokouji-kun.
Dialogue: 0,0:13:58.75,0:14:00.49,Default,,0000,0000,0000,,Hãy trả lời mình một câu nhé.
Dialogue: 0,0:14:01.57,0:14:07.05,Default,,0000,0000,0000,,Có phải Ichinose-san đã tự thú nhận\Nvề quá khứ với cậu từ trước không?
Dialogue: 0,0:14:07.81,0:14:08.48,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:14:12.28,0:14:15.78,Default,,0000,0000,0000,,Hôm qua, tôi đã qua phòng Ichinose.
Dialogue: 0,0:14:19.06,0:14:20.17,Default,,0000,0000,0000,,Nè.
Dialogue: 0,0:14:20.88,0:14:23.21,Default,,0000,0000,0000,,Mình hỏi một câu lạ lùng nhé.
Dialogue: 0,0:14:24.25,0:14:24.73,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:14:25.55,0:14:29.79,Default,,0000,0000,0000,,Tại sao, Ayanokouji-kun\Nlại không nói gì với mình vậy?
Dialogue: 0,0:14:32.35,0:14:34.57,Default,,0000,0000,0000,,Lý do tôi đến đây mỗi ngày...
Dialogue: 0,0:14:35.13,0:14:37.93,Default,,0000,0000,0000,,là đang đợi cậu khai hết toàn bộ đấy.
Dialogue: 0,0:14:39.68,0:14:40.56,Default,,0000,0000,0000,,Có lẽ thế.
Dialogue: 0,0:14:42.25,0:14:44.76,Default,,0000,0000,0000,,Đợi mình... tự khai sao...
Dialogue: 0,0:14:46.08,0:14:48.57,Default,,0000,0000,0000,,Về tội lỗi cậu đã phạm phải là gì...
Dialogue: 0,0:14:49.07,0:14:50.81,Default,,0000,0000,0000,,Thì tôi đã biết rồi.
Dialogue: 0,0:14:52.39,0:14:53.21,Default,,0000,0000,0000,,Ichinose.
Dialogue: 0,0:14:54.57,0:14:57.27,Default,,0000,0000,0000,,Có chạy trốn thì tội lỗi của cậu\Ncũng không biến mất đâu.
Dialogue: 0,0:14:57.62,0:14:58.45,Default,,0000,0000,0000,,Dừng lại đi!
Dialogue: 0,0:15:00.75,0:15:01.66,Default,,0000,0000,0000,,Mình...
Dialogue: 0,0:15:02.62,0:15:06.69,Default,,0000,0000,0000,,Mình cũng hiểu rằng việc đó là xấu xa!
Dialogue: 0,0:15:07.45,0:15:11.05,Default,,0000,0000,0000,,Lúc đó, mình đã thực sự nghĩ\Nchỉ còn mỗi cách đó!
Dialogue: 0,0:15:13.33,0:15:16.49,Default,,0000,0000,0000,,Vì mong muốn... em gái mỉm cười...
Dialogue: 0,0:15:18.34,0:15:19.74,Default,,0000,0000,0000,,Mà chẳng suy nghĩ gì...
Dialogue: 0,0:15:20.20,0:15:21.34,Default,,0000,0000,0000,,Thật ngu ngốc...
Dialogue: 0,0:15:21.88,0:15:23.90,Default,,0000,0000,0000,,Chẳng thể làm gì khác ngoài chạy trốn.
Dialogue: 0,0:15:23.90,0:15:25.43,Default,,0000,0000,0000,,Ngay cả lúc này!
Dialogue: 0,0:15:29.98,0:15:31.08,Default,,0000,0000,0000,,Ngay cả lúc này...
Dialogue: 0,0:15:32.23,0:15:34.00,Default,,0000,0000,0000,,Cũng giống như lúc đó...
Dialogue: 0,0:15:34.54,0:15:36.24,Default,,0000,0000,0000,,Mình lại tự nhốt bản thân.
Dialogue: 0,0:15:38.23,0:15:40.20,Default,,0000,0000,0000,,Phải làm sao mới được đây?
Dialogue: 0,0:15:41.36,0:15:42.96,Default,,0000,0000,0000,,Phải làm sao đây...
Dialogue: 0,0:15:43.29,0:15:44.55,Default,,0000,0000,0000,,Hãy nói cho mình biết đi.
Dialogue: 0,0:15:45.41,0:15:48.40,Default,,0000,0000,0000,,Nói cho mình biết đi mà, Ayanokouji-kun.
Dialogue: 0,0:15:49.56,0:15:50.18,Default,,0000,0000,0000,,Mình...
Dialogue: 0,0:15:51.01,0:15:53.88,Default,,0000,0000,0000,,Phải làm sao mới có thể ra khỏi căn phòng này...
Dialogue: 0,0:15:53.95,0:15:55.42,Default,,0000,0000,0000,,Tôi không biết.
Dialogue: 0,0:15:56.18,0:15:58.41,Default,,0000,0000,0000,,Ichinose chỉ còn cách tự đối mặt thôi.
Dialogue: 0,0:15:59.51,0:16:00.74,Default,,0000,0000,0000,,Không đúng sao?
Dialogue: 0,0:16:07.68,0:16:09.94,Default,,0000,0000,0000,,Trái tim của Ichinose đã tan vỡ.
Dialogue: 0,0:16:12.35,0:16:13.06,Default,,0000,0000,0000,,Chính tôi...
Dialogue: 0,0:16:20.15,0:16:21.05,Default,,0000,0000,0000,,Chính tôi...
Dialogue: 0,0:16:23.72,0:16:25.12,Default,,0000,0000,0000,,đã đập vỡ nó.
Dialogue: 0,0:16:27.27,0:16:28.13,Default,,0000,0000,0000,,Và rồi...
Dialogue: 0,0:16:28.13,0:16:30.98,Default,,0000,0000,0000,,Những phần bị vỡ vụn\Nkhi lành lại sẽ mạnh mẽ hơn...
Dialogue: 0,0:16:31.58,0:16:33.69,Default,,0000,0000,0000,,Và có thể vượt qua lời cáo buộc của cậu.
Dialogue: 0,0:16:34.73,0:16:35.92,Default,,0000,0000,0000,,Tóm lại là vậy.
Dialogue: 0,0:16:36.49,0:16:38.06,Default,,0000,0000,0000,,Thật cảm động.
Dialogue: 0,0:16:39.03,0:16:41.86,Default,,0000,0000,0000,,Cậu đã sử dụng Kamuro\Nđể khiến tôi hành động còn gì.
Dialogue: 0,0:16:42.41,0:16:44.37,Default,,0000,0000,0000,,Tại sao cậu dám khẳng định như vậy?
Dialogue: 0,0:16:45.20,0:16:48.04,Default,,0000,0000,0000,,Lon bia Kamuro đưa cho tôi...
Dialogue: 0,0:16:48.44,0:16:51.10,Default,,0000,0000,0000,,Chính là thứ cậu ta đã trộm khi mới nhập học.
Dialogue: 0,0:16:51.76,0:16:54.48,Default,,0000,0000,0000,,Hạn sử dụng của lon bia được đưa cho tôi...
Dialogue: 0,0:16:54.48,0:16:57.60,Default,,0000,0000,0000,,so với những lon hiện đang được bày bán...
Dialogue: 0,0:16:57.60,0:16:59.64,Default,,0000,0000,0000,,ngắn hơn gần một năm.
Dialogue: 0,0:17:01.28,0:17:03.42,Default,,0000,0000,0000,,Nghĩa là nguồn gốc của lon bia đó...
Dialogue: 0,0:17:03.61,0:17:06.54,Default,,0000,0000,0000,,Chính là từ cậu, Sakayanagi.
Dialogue: 0,0:17:08.93,0:17:10.24,Default,,0000,0000,0000,,Xuyên suốt vụ việc lần này...
Dialogue: 0,0:17:10.73,0:17:12.80,Default,,0000,0000,0000,,Vốn dĩ, tôi chỉ muốn theo dõi mà thôi.
Dialogue: 0,0:17:13.51,0:17:16.69,Default,,0000,0000,0000,,Nhưng cậu đã sử dụng Kamuro để kéo tôi vào.
Dialogue: 0,0:17:17.04,0:17:17.80,Default,,0000,0000,0000,,Tại sao vậy?
Dialogue: 0,0:17:18.50,0:17:22.26,Default,,0000,0000,0000,,Tất cả là để cậu quan tâm tới mình hơn đó.
Dialogue: 0,0:17:22.70,0:17:27.45,Default,,0000,0000,0000,,Nghĩa là với cậu, sự tồn tại của Ichinose\Nvốn chẳng đáng để bận tâm nhỉ?
Dialogue: 0,0:17:28.40,0:17:29.11,Default,,0000,0000,0000,,Đúng.
Dialogue: 0,0:17:30.96,0:17:32.92,Default,,0000,0000,0000,,Hãy đấu với mình đi.
Dialogue: 0,0:17:33.50,0:17:35.71,Default,,0000,0000,0000,,Như vậy thì tôi được lợi lộc gì?
Dialogue: 0,0:17:35.89,0:17:37.85,Default,,0000,0000,0000,,Vậy thì mình xin tự đặt cược...
Dialogue: 0,0:17:38.42,0:17:40.60,Default,,0000,0000,0000,,việc bản thân thôi học có được không?
Dialogue: 0,0:17:41.94,0:17:47.08,Default,,0000,0000,0000,,Dĩ nhiên, nếu cậu có thua mình đi nữa\Nthì cũng không cần phải thôi học đâu.
Dialogue: 0,0:17:48.50,0:17:51.16,Default,,0000,0000,0000,,Tuy nhiên, nếu cậu thua...
Dialogue: 0,0:17:51.23,0:17:54.86,Default,,0000,0000,0000,,Thì mình sẽ công bố cậu chính là\Nkẻ đứng sau giật dây lớp C.
Dialogue: 0,0:17:55.87,0:17:57.79,Default,,0000,0000,0000,,Vậy cậu định dùng gì để phân thắng bại đây?
Dialogue: 0,0:17:58.29,0:18:00.64,Default,,0000,0000,0000,,Ta hãy thi đấu ở đợt kiểm tra tiếp theo nhé.
Dialogue: 0,0:18:01.62,0:18:03.25,Default,,0000,0000,0000,,Như này thì cuối cùng...
Dialogue: 0,0:18:03.58,0:18:06.65,Default,,0000,0000,0000,,Cuộc sống học đường nhàm chán\Ncũng kết thúc rồi.
Dialogue: 0,0:18:14.88,0:18:16.89,Default,,0000,0000,0000,,Cảm ơn cậu đã tặng sô-cô-la bữa trước.
Dialogue: 0,0:18:18.64,0:18:23.44,Default,,0000,0000,0000,,Nhưng mình không gọi Ayanokouji-kun ra\Nđể nói về chuyện đó đâu nhé.
Dialogue: 0,0:18:24.38,0:18:30.28,Default,,0000,0000,0000,,Thông tin mà Kushida đưa cho mình\Ntrước Valentine đã chính xác.
Dialogue: 0,0:18:31.86,0:18:33.91,Default,,0000,0000,0000,,Tôi muốn Hội phó Kiriyama...
Dialogue: 0,0:18:33.91,0:18:37.10,Default,,0000,0000,0000,,Viết những thông tin này lên bảng tin.
Dialogue: 0,0:18:37.79,0:18:39.74,Default,,0000,0000,0000,,Để cứu Ichinose.
Dialogue: 0,0:18:40.21,0:18:44.04,Default,,0000,0000,0000,,Nhưng nếu bị phát giác,\Nthì sự tín nhiệm với hội học sinh sẽ sụp đổ.
Dialogue: 0,0:18:44.54,0:18:45.62,Default,,0000,0000,0000,,Trong trường hợp đó...
Dialogue: 0,0:18:45.62,0:18:48.96,Default,,0000,0000,0000,,Hội trưởng Hội học sinh, Nagumo\Nsẽ nhận phải thiệt hại lớn hơn ai hết.
Dialogue: 0,0:18:50.02,0:18:52.40,Default,,0000,0000,0000,,Tôi nghĩ đó là việc đáng mừng đấy chứ.
Dialogue: 0,0:18:52.99,0:18:55.78,Default,,0000,0000,0000,,Nhưng kẻ phải chịu tội lúc đó sẽ là tôi.
Dialogue: 0,0:18:56.13,0:18:58.30,Default,,0000,0000,0000,,Nếu anh từ chối vụ này...
Dialogue: 0,0:18:59.28,0:19:02.69,Default,,0000,0000,0000,,Tôi sẽ coi như anh đã bị Nagumo thao túng...
Dialogue: 0,0:19:03.06,0:19:06.08,Default,,0000,0000,0000,,Và báo cáo cho cựu hội trưởng đấy.
Dialogue: 0,0:19:07.08,0:19:07.90,Default,,0000,0000,0000,,Được rồi.
Dialogue: 0,0:19:08.50,0:19:11.80,Default,,0000,0000,0000,,Coi như cho cậu vay một món nợ lớn đi.
Dialogue: 0,0:19:14.05,0:19:15.12,Default,,0000,0000,0000,,Tôi rất biết ơn đấy.
Dialogue: 0,0:19:15.57,0:19:17.72,Default,,0000,0000,0000,,Giúp được cậu là mình vui lắm đó.
Dialogue: 0,0:19:18.11,0:19:20.16,Default,,0000,0000,0000,,Vậy, cậu cũng hiểu chứ nhỉ?
Dialogue: 0,0:19:20.18,0:19:20.60,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:19:21.47,0:19:22.84,On Top,,0000,0000,0000,,(Bạn có đồng ý chuyển điểm không?)
Dialogue: 0,0:19:22.02,0:19:23.98,Default,,0000,0000,0000,,Tôi vừa trả đủ cho lượng thông tin đó.
Dialogue: 0,0:19:22.84,0:19:24.47,On Top,,0000,0000,0000,,(Đang chuyển điểm)
Dialogue: 0,0:19:24.82,0:19:26.50,Default,,0000,0000,0000,,Hãy xác nhận lại đi.
Dialogue: 0,0:19:28.93,0:19:30.35,Default,,0000,0000,0000,,Không sai chút nào!
Dialogue: 0,0:19:30.68,0:19:34.47,Default,,0000,0000,0000,,Kể từ giờ, tôi sẽ chuyển\Nmột nửa số điểm tôi nhận được cho cậu.
Dialogue: 0,0:19:35.30,0:19:36.40,Default,,0000,0000,0000,,Như vậy đã được chưa?
Dialogue: 0,0:19:37.82,0:19:38.22,Default,,0000,0000,0000,,Ừ!
Dialogue: 0,0:19:39.16,0:19:41.30,Default,,0000,0000,0000,,Chừng nào việc chuyển tiền này còn tiếp diễn,
Dialogue: 0,0:19:41.30,0:19:43.32,Default,,0000,0000,0000,,thì mình sẽ không làm kẻ địch của cậu đâu.
Dialogue: 0,0:19:43.72,0:19:45.56,Default,,0000,0000,0000,,Không ngoài mong đợi, Ayanokouji-kun.
Dialogue: 0,0:19:46.10,0:19:48.32,Default,,0000,0000,0000,,Cậu đúng là khác hẳn với Horikita-san.
Dialogue: 0,0:19:49.01,0:19:51.36,Default,,0000,0000,0000,,Từ giờ mong được chiếu cố... nhỉ?
Dialogue: 0,0:19:52.52,0:19:55.06,Default,,0000,0000,0000,,Cả việc thuận theo khiêu khích của Sakayanagi...
Dialogue: 0,0:19:55.61,0:19:57.20,Default,,0000,0000,0000,,Lẫn việc cứu Ichinose...
Dialogue: 0,0:19:57.53,0:19:59.01,Default,,0000,0000,0000,,Tất cả đều chỉ là một quá trình.
Dialogue: 0,0:19:59.94,0:20:02.64,Default,,0000,0000,0000,,Thứ tôi muốn biết\Nthông qua chuỗi sự kiện vừa rồi...
Dialogue: 0,0:20:02.88,0:20:04.24,Default,,0000,0000,0000,,Chỉ có một mà thôi.
Dialogue: 0,0:20:05.08,0:20:07.41,Default,,0000,0000,0000,,Thông tin mà Kushida Kikyou đang nắm giữ...
Dialogue: 0,0:20:07.41,0:20:11.57,Default,,0000,0000,0000,,Tôi sẽ xác nhận Chất và Lượng của chúng...
Dialogue: 0,0:20:13.75,0:20:15.24,Default,,0000,0000,0000,,Để rồi khiến cô ta bị đuổi học.
Dialogue: 0,0:20:18.36,0:20:21.92,Default,,0000,0000,0000,,Khao khát rối bời
Dialogue: 0,0:20:21.92,0:20:23.92,Default,,0000,0000,0000,,Chằm chằm theo dõi
Dialogue: 0,0:20:25.70,0:20:29.28,Default,,0000,0000,0000,,Là kẻ sửa chữa ẩn nấp
Dialogue: 0,0:20:29.28,0:20:30.97,Default,,0000,0000,0000,,Như sắp gục ngã
Dialogue: 0,0:20:33.08,0:20:35.62,Default,,0000,0000,0000,,Ý nghĩa ẩn sau lời nói
Dialogue: 0,0:20:35.62,0:20:37.46,Default,,0000,0000,0000,,Không một lời thật lòng
Dialogue: 0,0:20:37.46,0:20:39.36,Default,,0000,0000,0000,,Con người là cô độc
Dialogue: 0,0:20:40.50,0:20:42.93,Default,,0000,0000,0000,,Dựng lên vẻ ngoài giả tạo
Dialogue: 0,0:20:42.93,0:20:46.49,Default,,0000,0000,0000,,Sinh tồn, sống sót bằng lừa gạt
Dialogue: 0,0:20:47.17,0:20:48.17,Default,,0000,0000,0000,,Còn thở hay không?
Dialogue: 0,0:20:48.17,0:20:49.95,Default,,0000,0000,0000,,Hiển nhiên, câu hỏi ngu dốt, kết luận
Dialogue: 0,0:20:49.95,0:20:50.83,Default,,0000,0000,0000,,Nào, hít thở đi
Dialogue: 0,0:20:51.50,0:20:55.35,Default,,0000,0000,0000,,Suy nghĩ dừng lại, cung cấp Oxi
Dialogue: 0,0:20:55.35,0:20:56.23,Default,,0000,0000,0000,,Vì cớ gì
Dialogue: 0,0:20:56.88,0:20:58.13,Default,,0000,0000,0000,,Vì ai
Dialogue: 0,0:20:58.73,0:20:59.98,Default,,0000,0000,0000,,Hãy lật ngược
Dialogue: 0,0:21:00.93,0:21:02.31,Default,,0000,0000,0000,,Hãy sống
Dialogue: 0,0:21:02.77,0:21:04.98,Default,,0000,0000,0000,,Kỳ vọng là thứ vô giá trị
Dialogue: 0,0:21:04.98,0:21:07.66,Default,,0000,0000,0000,,Nhưng vậy cũng được thôi
Dialogue: 0,0:21:08.59,0:21:11.70,Default,,0000,0000,0000,,Không tin một ai, không tin một ai
Dialogue: 0,0:21:12.99,0:21:15.36,Default,,0000,0000,0000,,Bi kịch, bi kịch
Dialogue: 0,0:21:17.14,0:21:18.42,Default,,0000,0000,0000,,Vẫn mãi tập dượt?
Dialogue: 0,0:21:18.42,0:21:19.92,Default,,0000,0000,0000,,Nhiệm vụ từ khi nào?
Dialogue: 0,0:21:19.92,0:21:23.20,Default,,0000,0000,0000,,Không một câu trả lời
Dialogue: 0,0:21:23.20,0:21:26.47,Default,,0000,0000,0000,,Trái tim không tha thứ, không tha thứ
Dialogue: 0,0:21:27.83,0:21:30.17,Default,,0000,0000,0000,,Xoay vần cả vận mệnh
Dialogue: 0,0:21:31.90,0:21:34.53,Default,,0000,0000,0000,,Cười chế giễu thiết lập của kịch bản
Dialogue: 0,0:21:34.53,0:21:37.92,Default,,0000,0000,0000,,Đừng hòng mà cản trở
Dialogue: 0,0:21:37.92,0:21:39.45,Default,,0000,0000,0000,,Đúng theo ý muốn
Dialogue: 0,0:21:39.45,0:21:42.70,Default,,0000,0000,0000,,Khao khát rối bời
Dialogue: 0,0:21:42.70,0:21:43.76,Default,,0000,0000,0000,,Hãy sống
Dialogue: 0,0:21:49.92,0:21:51.88,Default,,0000,0000,0000,,Chào buổi sáng, Ayanokouji-kun.
Dialogue: 0,0:21:52.13,0:21:53.18,Default,,0000,0000,0000,,Chào buổi sáng.
Dialogue: 0,0:21:53.27,0:21:55.52,Default,,0000,0000,0000,,Hôm qua, cậu ngầu lắm đấy.
Dialogue: 0,0:21:58.03,0:21:59.67,Default,,0000,0000,0000,,T-Thật sao?
Dialogue: 0,0:22:00.13,0:22:03.60,Default,,0000,0000,0000,,Vì chỉ có bản thân mới đập tan được quá khứ.
Dialogue: 0,0:22:04.63,0:22:05.73,Default,,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:22:06.77,0:22:09.22,Default,,0000,0000,0000,,Việc mình đã làm không thể xóa bỏ được.
Dialogue: 0,0:22:09.83,0:22:13.43,Default,,0000,0000,0000,,Nhưng mình nghĩ từ giờ\Nbản thân có thể đối mặt mà sống với nó.
Dialogue: 0,0:22:14.44,0:22:15.32,Default,,0000,0000,0000,,Nếu như...
Dialogue: 0,0:22:15.32,0:22:16.03,Default,,0000,0000,0000,,Ơ?
Dialogue: 0,0:22:16.28,0:22:18.44,Default,,0000,0000,0000,,Cậu cảm thấy bản thân mất phương hướng...
Dialogue: 0,0:22:19.10,0:22:21.30,Default,,0000,0000,0000,,Thì cứ tìm tôi nói chuyện nhé.
Dialogue: 0,0:22:22.01,0:22:22.95,Default,,0000,0000,0000,,Hể!?
Dialogue: 0,0:22:24.56,0:22:28.64,Default,,0000,0000,0000,,Ít nhất tôi cũng có thể nghe cậu tâm sự.
Dialogue: 0,0:22:30.35,0:22:32.96,Default,,0000,0000,0000,,Mình có thể... dựa dẫm vào cậu ư...?
Dialogue: 0,0:22:33.62,0:22:35.45,Default,,0000,0000,0000,,Đấy là nếu cậu không chê một đứa như tôi.
Dialogue: 0,0:22:38.02,0:22:40.00,Default,,0000,0000,0000,,V-Vậy à...
Dialogue: 0,0:22:40.81,0:22:42.64,Default,,0000,0000,0000,,À... À này...
Dialogue: 0,0:22:43.97,0:22:44.85,Default,,0000,0000,0000,,Có chuyện gì thế?
Dialogue: 0,0:22:45.62,0:22:47.37,Default,,0000,0000,0000,,Thì là...
Dialogue: 0,0:22:48.48,0:22:50.67,Default,,0000,0000,0000,,Ơ kìa... lạ thật đó.
Dialogue: 0,0:22:50.93,0:22:53.32,Default,,0000,0000,0000,,Mình định lấy ra thật nhanh mà.
Dialogue: 0,0:22:54.47,0:22:55.82,Default,,0000,0000,0000,,Phải nói sao nhỉ...
Dialogue: 0,0:22:56.29,0:22:59.91,Default,,0000,0000,0000,,Mình chưa từng tặng thứ này bao giờ.
Dialogue: 0,0:23:00.30,0:23:02.73,Default,,0000,0000,0000,,Nhưng mình chỉ có thể\Ncảm ơn bằng cách này thôi...
Dialogue: 0,0:23:02.96,0:23:05.36,Default,,0000,0000,0000,,Không cần phải cố đâu.
Dialogue: 0,0:23:05.57,0:23:07.87,Default,,0000,0000,0000,,M-M-Mình không có cố gì hết.
Dialogue: 0,0:23:11.98,0:23:14.78,Default,,0000,0000,0000,,Dù có hơi muộn một chút.
Dialogue: 0,0:23:14.96,0:23:17.45,Default,,0000,0000,0000,,Đây là sô-cô-la Valentine.
Dialogue: 0,0:23:18.39,0:23:20.44,Default,,0000,0000,0000,,C-Cậu không cần sao?
Dialogue: 0,0:23:23.00,0:23:23.56,Default,,0000,0000,0000,,Không.
Dialogue: 0,0:23:25.03,0:23:25.81,Default,,0000,0000,0000,,Cảm ơn cậu.
