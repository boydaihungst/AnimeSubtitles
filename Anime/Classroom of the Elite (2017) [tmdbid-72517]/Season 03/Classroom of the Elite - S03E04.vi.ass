Dialogue: 0,0:00:01.98,0:00:05.78,Default,,0000,0000,0000,,(Bạn chỉ có quyền thực hiện hành động,\Ncòn kết quả ra sao thì không thể kiểm soát)
Dialogue: 0,0:00:05.78,0:00:11.99,Default,,0000,0000,0000,,(Trích [Bhagavad Gita], không rõ tác giả)
Dialogue: 0,0:00:18.50,0:00:21.96,Default,,0000,0000,0000,,(Cuộc gọi nhỡ từ KK - Hôm qua)
Dialogue: 0,0:00:41.40,0:00:45.05,Default,,0000,0000,0000,,Sau giờ học hôm nay,\Ngặp nhau nói chuyện một buổi đi.
Dialogue: 0,0:00:45.06,0:00:48.04,Default,,0000,0000,0000,,Với cả gọi điện vì chuyện gì thế?
Dialogue: 0,0:00:48.04,0:00:50.65,Default,,0000,0000,0000,,Cậu ta không hiểu hôm nay là ngày gì sao!?
Dialogue: 0,0:00:54.22,0:00:58.40,Default,,0000,0000,0000,,Chỉ là gọi điện vu vơ thôi,\Nnên không cần để ý đâu.
Dialogue: 0,0:00:58.98,0:01:03.12,Default,,0000,0000,0000,,Quan trọng hơn là gặp nhau cũng được\Nnhưng có thể sớm hơn không?
Dialogue: 0,0:01:13.05,0:01:15.96,Default,,0000,0000,0000,,Những con bướm chưa thể thành chim
Dialogue: 0,0:01:15.96,0:01:19.37,Default,,0000,0000,0000,,Lắc lư đôi cánh như thể bị băm vằm ấy
Dialogue: 0,0:01:19.58,0:01:22.78,Default,,0000,0000,0000,,Chờ đợi khoảnh khắc để vươn vòi
Dialogue: 0,0:01:22.80,0:01:29.44,Default,,0000,0000,0000,,Chào mừng đến với thế giới của những màn đấu trí
Dialogue: 0,0:01:37.86,0:01:41.34,Default,,0000,0000,0000,,Mây trôi mang theo quyết tâm chiến đấu
Dialogue: 0,0:01:41.34,0:01:44.62,Default,,0000,0000,0000,,Những ký hiệu rải rác là những câu đố
Dialogue: 0,0:01:44.62,0:01:49.57,Default,,0000,0000,0000,,Giữa sự nghi kỵ và tình yêu chân thành
Dialogue: 0,0:01:49.57,0:01:51.62,Default,,0000,0000,0000,,Ai sẽ là kẻ thống trị?
Dialogue: 0,0:01:51.62,0:01:53.34,Default,,0000,0000,0000,,Tuyên chiến, chiến tuyến biến động
Dialogue: 0,0:01:53.34,0:01:54.60,Default,,0000,0000,0000,,Chiến lược mưu ma chước quỷ
Dialogue: 0,0:01:54.60,0:01:56.09,Default,,0000,0000,0000,,Điềm tĩnh và sợ hãi đan xen
Dialogue: 0,0:01:56.09,0:01:57.76,Default,,0000,0000,0000,,Tiếng kèn khai mạc cho sự sụp đổ
Dialogue: 0,0:01:57.76,0:02:01.14,Default,,0000,0000,0000,,Ôi, màn kịch rối trắng
Dialogue: 0,0:02:01.14,0:02:02.38,Default,,0000,0000,0000,,Vòng lặp trống rỗng
Dialogue: 0,0:02:02.38,0:02:04.02,Default,,0000,0000,0000,,Tài năng toàn diện thật gò bó
Dialogue: 0,0:02:04.02,0:02:10.25,Default,,0000,0000,0000,,"Tưởng rằng sẽ trở thành một viên đạn tiện dụng sao?"
Dialogue: 0,0:02:10.25,0:02:13.97,Default,,0000,0000,0000,,Trí tuệ sắc bén luôn cô độc
Dialogue: 0,0:02:13.97,0:02:17.26,Default,,0000,0000,0000,,Thắng lợi hay thất bại, tất cả dựa vào thực lực
Dialogue: 0,0:02:17.26,0:02:21.84,Default,,0000,0000,0000,,Nếu con người vô năng nhất cũng cố gắng hết sức
Dialogue: 0,0:02:21.84,0:02:24.01,Default,,0000,0000,0000,,Số phận sẽ thay đổi
Dialogue: 0,0:02:24.01,0:02:27.49,Default,,0000,0000,0000,,Hãy lật đổ những con số, thường thức
Dialogue: 0,0:02:27.49,0:02:29.44,Default,,0000,0000,0000,,Mà tiến về phía ánh sáng
Dialogue: 0,0:02:29.44,0:02:30.73,Default,,0000,0000,0000,,Zugzwang Du-Ra-ta-ta
Dialogue: 0,0:02:30.73,0:02:32.14,Default,,0000,0000,0000,,Nhảy lên, mảnh ghép nhỏ
Dialogue: 0,0:02:32.14,0:02:34.00,Default,,0000,0000,0000,,Zugzwang Du-Ra-ta-ta
Dialogue: 0,0:02:34.00,0:02:35.68,Default,,0000,0000,0000,,Trong lòng bàn tay này
Dialogue: 0,0:02:35.68,0:02:37.81,Default,,0000,0000,0000,,Zugzwang Du-Ra-ta-ta
Dialogue: 0,0:02:38.28,0:02:41.80,Default,,0000,0000,0000,,Dùng tầm nhìn đen trắng ấy mà vươn lên phía trước
Dialogue: 0,0:02:49.72,0:02:51.26,Default,,0000,0000,0000,,Này, Ayanokouji!
Dialogue: 0,0:02:51.26,0:02:53.87,Default,,0000,0000,0000,,Cậu... có được nhận sô-cô-la chưa!?
Dialogue: 0,0:02:53.87,0:02:54.98,Default,,0000,0000,0000,,Sô-cô-la?
Dialogue: 0,0:02:54.98,0:02:59.91,Default,,0000,0000,0000,,Có vẻ dịch thẳng ra là "Cậu đã nhận được\Nsô-cô-la của Horikita chưa?" đó.
Dialogue: 0,0:03:00.25,0:03:02.54,Default,,0000,0000,0000,,Đồ ngốc! Liên quan gì tới Suzune đâu!
Dialogue: 0,0:03:03.40,0:03:05.38,Default,,0000,0000,0000,,Thế rốt cuộc là thế nào?
Dialogue: 0,0:03:06.37,0:03:07.88,Default,,0000,0000,0000,,Chưa nhận gì cả.
Dialogue: 0,0:03:07.88,0:03:09.38,Default,,0000,0000,0000,,Làm gì có chuyện tôi được nhận.
Dialogue: 0,0:03:11.58,0:03:12.96,Default,,0000,0000,0000,,Nói thật chứ?
Dialogue: 0,0:03:12.96,0:03:13.41,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:03:14.92,0:03:16.60,Default,,0000,0000,0000,,Phải rồi nhỉ.
Dialogue: 0,0:03:16.60,0:03:18.79,Default,,0000,0000,0000,,Như cậu thì làm gì được tặng.
Dialogue: 0,0:03:20.93,0:03:24.52,Default,,0000,0000,0000,,Tớ thì không hứng thú\Nvới thứ tầm thường như sô-cô-la đâu.
Dialogue: 0,0:03:24.67,0:03:25.94,Default,,0000,0000,0000,,Đừng mạnh mồm thế...
Dialogue: 0,0:03:26.76,0:03:28.23,Default,,0000,0000,0000,,Mà này, Sotomura...
Dialogue: 0,0:03:28.23,0:03:30.25,Default,,0000,0000,0000,,Cái kiểu nói chuyện sặc mùi cổ trang đâu rồi?
Dialogue: 0,0:03:30.38,0:03:32.14,Default,,0000,0000,0000,,Vậy là nhận ra rồi à.
Dialogue: 0,0:03:32.62,0:03:36.51,Default,,0000,0000,0000,,Qua buổi rèn luyện ngồi thiền dạo trước,\Ntớ đã giác ngộ bản ngã đích thực...
Dialogue: 0,0:03:36.51,0:03:37.66,Default,,0000,0000,0000,,- Giờ thì chia tay tính cách cũ rồi...
Dialogue: 0,0:03:37.66,0:03:38.66,Default,,0000,0000,0000,,- Thế còn Hondou?\N- Giờ thì chia tay tính cách cũ rồi...
Dialogue: 0,0:03:38.66,0:03:40.43,Default,,0000,0000,0000,,Này! Nghe người ta nói đi chứ!
Dialogue: 0,0:03:40.44,0:03:41.72,Default,,0000,0000,0000,,Tớ cũng không có gì.
Dialogue: 0,0:03:41.92,0:03:44.38,Default,,0000,0000,0000,,Muốn có ít nhất một cái ghê.
Dialogue: 0,0:03:44.40,0:03:46.10,Default,,0000,0000,0000,,Muốn Shinohara tặng chứ gì?
Dialogue: 0,0:03:46.11,0:03:48.35,Default,,0000,0000,0000,,Hể!? S-Sao lại thế!?
Dialogue: 0,0:03:48.35,0:03:50.32,Default,,0000,0000,0000,,Tại sao lại nhắc tới Shinohara vậy?
Dialogue: 0,0:03:50.62,0:03:53.63,Default,,0000,0000,0000,,Bởi vì hai người luôn nói chuyện thân mật với nhau...
Dialogue: 0,0:03:53.63,0:03:56.11,Default,,0000,0000,0000,,Shinohara cũng dịu dàng với Ike nữa.
Dialogue: 0,0:03:56.11,0:03:57.79,Default,,0000,0000,0000,,Có thân mật gì đâu!
Dialogue: 0,0:03:57.79,0:03:58.95,Default,,0000,0000,0000,,Cũng chẳng thích thú gì.
Dialogue: 0,0:03:58.95,0:04:01.53,Default,,0000,0000,0000,,Thôi nào, thành thật đi bạn ơi.
Dialogue: 0,0:04:01.67,0:04:02.70,Default,,0000,0000,0000,,Thích đúng không?
Dialogue: 0,0:04:02.70,0:04:04.42,Default,,0000,0000,0000,,K-Không phải mà!
Dialogue: 0,0:04:04.42,0:04:05.32,Default,,0000,0000,0000,,Đúng rồi!
Dialogue: 0,0:04:05.32,0:04:09.06,Default,,0000,0000,0000,,Có khi hội con gái đang ngại\Nnên chưa tặng sô-cô-la đấy!
Dialogue: 0,0:04:09.06,0:04:09.80,Default,,0000,0000,0000,,Công nhận!
Dialogue: 0,0:04:09.94,0:04:12.37,Default,,0000,0000,0000,,Chúng ta vẫn có cơ hội!
Dialogue: 0,0:04:16.41,0:04:17.66,Default,,0000,0000,0000,,Chào buổi sáng mọi người.
Dialogue: 0,0:04:20.76,0:04:22.08,Default,,0000,0000,0000,,Kinh thật...
Dialogue: 0,0:04:22.49,0:04:25.58,Default,,0000,0000,0000,,Vậy là không phải vì ngại mà chưa tặng sao...
Dialogue: 0,0:04:26.05,0:04:29.26,Default,,0000,0000,0000,,Vừa chia tay Karuizawa một cái là như này sao...
Dialogue: 0,0:04:33.78,0:04:34.42,Default,,0000,0000,0000,,Gì thế?
Dialogue: 0,0:04:34.92,0:04:37.63,Default,,0000,0000,0000,,Dạo gần đây, vụ Kushida thế nào rồi?
Dialogue: 0,0:04:38.08,0:04:39.00,Default,,0000,0000,0000,,Ý cậu là gì?
Dialogue: 0,0:04:39.60,0:04:41.64,Default,,0000,0000,0000,,Tôi đang hỏi tình hình có êm đẹp không đó.
Dialogue: 0,0:04:42.13,0:04:43.25,Default,,0000,0000,0000,,Biết nói sao nhỉ...
Dialogue: 0,0:04:43.83,0:04:46.50,Default,,0000,0000,0000,,Tôi đang cố hết sức cải thiện quan hệ đấy.
Dialogue: 0,0:04:47.48,0:04:49.06,Default,,0000,0000,0000,,Cậu cũng định góp sức sao?
Dialogue: 0,0:04:50.05,0:04:51.44,Default,,0000,0000,0000,,Chỉ là hỏi thăm thôi.
Dialogue: 0,0:04:51.67,0:04:52.72,Default,,0000,0000,0000,,Hẳn là thế.
Dialogue: 0,0:04:53.30,0:04:54.04,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:04:54.89,0:04:57.59,Default,,0000,0000,0000,,Kushida-san đang thay đổi từng chút một rồi.
Dialogue: 0,0:04:58.41,0:05:01.91,Default,,0000,0000,0000,,Sau giờ học hôm nay,\Ntôi sẽ uống trà với cậu ấy ở Keyaki Mall.
Dialogue: 0,0:05:02.59,0:05:04.81,Default,,0000,0000,0000,,Trong khi trước giờ đều dứt khoát từ chối.
Dialogue: 0,0:05:05.62,0:05:06.36,Default,,0000,0000,0000,,Vậy à.
Dialogue: 0,0:05:07.22,0:05:09.46,Default,,0000,0000,0000,,Tôi nghĩ nếu nói chuyện thì sẽ hiểu nhau thôi.
Dialogue: 0,0:05:10.62,0:05:11.84,Default,,0000,0000,0000,,Nếu vậy thì tốt rồi.
Dialogue: 0,0:05:12.00,0:05:13.43,Default,,0000,0000,0000,,Nói kiểu gì vậy?
Dialogue: 0,0:05:13.93,0:05:15.11,Default,,0000,0000,0000,,Nghĩ mình đứng ngoài nhỉ.
Dialogue: 0,0:05:17.44,0:05:18.56,Default,,0000,0000,0000,,Suzune...
Dialogue: 0,0:05:19.32,0:05:20.24,Default,,0000,0000,0000,,Có chuyện gì thế?
Dialogue: 0,0:05:20.94,0:05:22.44,Default,,0000,0000,0000,,À thì...
Dialogue: 0,0:05:22.70,0:05:26.56,Default,,0000,0000,0000,,Không biết... khi nào cậu có thể dạy tôi học vậy?
Dialogue: 0,0:05:27.17,0:05:29.64,Default,,0000,0000,0000,,Lần này, cậu tích cực quá nhỉ.
Dialogue: 0,0:05:29.89,0:05:33.23,Default,,0000,0000,0000,,Ừ thì đúng, tôi không muốn bị đuổi học đâu.
Dialogue: 0,0:05:33.52,0:05:35.67,Default,,0000,0000,0000,,Như tôi thì bắt đầu từ hôm nay sẽ-
Dialogue: 0,0:05:35.67,0:05:36.35,Default,,0000,0000,0000,,Không.
Dialogue: 0,0:05:37.12,0:05:39.68,Default,,0000,0000,0000,,Để tới lúc nghỉ sinh hoạt câu lạc bộ\Ncũng không muộn đâu.
Dialogue: 0,0:05:40.20,0:05:40.70,Default,,0000,0000,0000,,Hự!
Dialogue: 0,0:05:41.88,0:05:42.87,Default,,0000,0000,0000,,Công nhận...
Dialogue: 0,0:05:54.55,0:05:56.67,Default,,0000,0000,0000,,Theo báo cáo của Karuizawa thì...
Dialogue: 0,0:05:56.67,0:05:58.69,Default,,0000,0000,0000,,Hôm nay, Ichinose cũng nghỉ học sao...
Dialogue: 0,0:06:09.41,0:06:11.43,Default,,0000,0000,0000,,Còn tưởng là ai chứ...
Dialogue: 0,0:06:11.82,0:06:14.18,Default,,0000,0000,0000,,Năm nhất cũng bí mật gặp nhau vào giờ này sao?
Dialogue: 0,0:06:20.02,0:06:21.06,Default,,0000,0000,0000,,Tránh ra.
Dialogue: 0,0:06:21.40,0:06:24.64,Default,,0000,0000,0000,,Tôi cũng không ghét thể loại như cậu đâu.
Dialogue: 0,0:06:25.30,0:06:28.39,Default,,0000,0000,0000,,Nhưng cậu không hợp với hội học sinh của tôi.
Dialogue: 0,0:06:35.09,0:06:37.09,Default,,0000,0000,0000,,Giờ thì Horikita-senpai à...
Dialogue: 0,0:06:37.09,0:06:38.64,Default,,0000,0000,0000,,Về chuyện chính ấy...
Dialogue: 0,0:06:38.84,0:06:41.22,Default,,0000,0000,0000,,Cậu định nói trước mặt năm nhất sao?
Dialogue: 0,0:06:43.54,0:06:45.22,Default,,0000,0000,0000,,Cũng có làm sao đâu nhỉ.
Dialogue: 0,0:06:45.82,0:06:49.66,Default,,0000,0000,0000,,Tôi muốn anh bỏ bài kiểm tra ngày mai.
Dialogue: 0,0:06:49.66,0:06:52.46,Default,,0000,0000,0000,,Cậu hiểu là không thể nào bỏ được kia mà.
Dialogue: 0,0:06:53.00,0:06:56.50,Default,,0000,0000,0000,,Anh không đọc được nước đi của tôi đâu.
Dialogue: 0,0:06:56.50,0:06:57.70,Default,,0000,0000,0000,,À không.
Dialogue: 0,0:06:57.70,0:07:02.36,Default,,0000,0000,0000,,Trong trường này không có ai\Nđọc được suy nghĩ của tôi cả.
Dialogue: 0,0:07:03.04,0:07:05.80,Default,,0000,0000,0000,,Cả cái người mà anh đang để ý cũng vậy...
Dialogue: 0,0:07:06.91,0:07:08.06,Default,,0000,0000,0000,,Đúng rồi.
Dialogue: 0,0:07:08.06,0:07:11.45,Default,,0000,0000,0000,,Hình như cậu ta ở cùng nhóm\Nvới cậu năm nhất đằng kia nhỉ.
Dialogue: 0,0:07:12.06,0:07:14.60,Default,,0000,0000,0000,,Ayanokouji Kiyotaka...
Dialogue: 0,0:07:14.62,0:07:15.30,Default,,0000,0000,0000,,Ể?!
Dialogue: 0,0:07:18.07,0:07:21.44,Default,,0000,0000,0000,,Người mà Horikita Manabu\Nđặt cược nhiều nhất...
Dialogue: 0,0:07:21.90,0:07:27.19,Default,,0000,0000,0000,,Nếu Ayanokouji có liên quan\Ntới vụ Ryuuen mất vị thế thì tức là...
Dialogue: 0,0:07:28.60,0:07:30.48,Default,,0000,0000,0000,,Mình đã nghĩ quá lên rồi sao?
Dialogue: 0,0:07:31.52,0:07:33.97,Default,,0000,0000,0000,,Cậu ta trông không giống người có mặt tối...
Dialogue: 0,0:07:41.56,0:07:43.64,Default,,0000,0000,0000,,Óa! Lạnh quá!
Dialogue: 0,0:07:44.04,0:07:46.73,Default,,0000,0000,0000,,Tại sao phải đợi nhau ở chỗ như này chứ!?
Dialogue: 0,0:07:47.44,0:07:49.27,Default,,0000,0000,0000,,Vẫn còn chỗ khác kia mà!
Dialogue: 0,0:07:52.94,0:07:53.80,Default,,0000,0000,0000,,Karuizawa!?
Dialogue: 0,0:07:54.47,0:07:57.08,Default,,0000,0000,0000,,Thì đâu thể gặp nhau ở sảnh được.
Dialogue: 0,0:07:57.55,0:08:01.27,Default,,0000,0000,0000,,Mặc dù cậu chia tay Hirata rồi,\Nnhưng có thể phát sinh tin đồn kỳ quặc đấy.
Dialogue: 0,0:08:01.90,0:08:03.66,Default,,0000,0000,0000,,Như vậy sẽ khó xử cho cậu nhỉ.
Dialogue: 0,0:08:03.92,0:08:05.25,Default,,0000,0000,0000,,Cũng đúng...
Dialogue: 0,0:08:05.82,0:08:08.46,Default,,0000,0000,0000,,Nhưng lén lút gặp nhau kiểu gì nổi bật quá vậy?
Dialogue: 0,0:08:09.13,0:08:12.31,Default,,0000,0000,0000,,Ngộ nhỡ bị bắt gặp\Nthì kiểu gì cũng có tin đồn cho xem.
Dialogue: 0,0:08:12.78,0:08:13.96,Default,,0000,0000,0000,,Không cần lo.
Dialogue: 0,0:08:14.30,0:08:15.42,Default,,0000,0000,0000,,Gì chứ...
Dialogue: 0,0:08:15.42,0:08:18.10,Default,,0000,0000,0000,,Chẳng hiểu cậu có đang cẩn thận hay không nữa.
Dialogue: 0,0:08:18.10,0:08:19.41,Default,,0000,0000,0000,,Mà kệ đi.
Dialogue: 0,0:08:19.66,0:08:21.56,Default,,0000,0000,0000,,Cơ mà vẫn lạnh quá đi mất!
Dialogue: 0,0:08:21.56,0:08:23.72,Default,,0000,0000,0000,,Muốn mùa hè mau tới ghê.
Dialogue: 0,0:08:23.72,0:08:27.70,Default,,0000,0000,0000,,Nếu kêu mùa hè hãy mau tới thì chẳng phải\Nmùa đông cũng tới sớm luôn sao?
Dialogue: 0,0:08:27.70,0:08:28.18,Default,,0000,0000,0000,,A...
Dialogue: 0,0:08:28.81,0:08:31.02,Default,,0000,0000,0000,,Con gái không nghĩ như vậy đâu đó.
Dialogue: 0,0:08:31.69,0:08:33.20,Default,,0000,0000,0000,,Đang nói chuyện gì thế nhỉ?
Dialogue: 0,0:08:33.82,0:08:36.81,Default,,0000,0000,0000,,Người đang bí mật liên lạc với Ayanokouji...
Dialogue: 0,0:08:36.81,0:08:38.64,Default,,0000,0000,0000,,Chẳng lẽ chính là Karuizawa?
Dialogue: 0,0:08:39.43,0:08:43.40,Default,,0000,0000,0000,,Thế cậu gọi mình ra đây\Nvào cái ngày này để làm gì vậy?
Dialogue: 0,0:08:43.84,0:08:46.08,Default,,0000,0000,0000,,Không phải hôm nay thì cũng không sao...
Dialogue: 0,0:08:46.52,0:08:47.82,Default,,0000,0000,0000,,Vậy hả!?
Dialogue: 0,0:08:48.71,0:08:52.94,Default,,0000,0000,0000,,Vậy mà mình cứ nghĩ cậu\Nnhất định phải gặp mình vào hôm nay cơ.
Dialogue: 0,0:08:53.64,0:08:54.34,Default,,0000,0000,0000,,Không đâu.
Dialogue: 0,0:08:54.58,0:08:57.56,Default,,0000,0000,0000,,Chỉ là tôi muốn xác nhận càng sớm càng tốt thôi.
Dialogue: 0,0:08:58.79,0:08:59.93,Default,,0000,0000,0000,,Hử~
Dialogue: 0,0:09:01.16,0:09:03.56,Default,,0000,0000,0000,,Cậu có nhận ra số điện thoại này không?
Dialogue: 0,0:09:06.90,0:09:08.68,Default,,0000,0000,0000,,Ể? Ai vậy nhỉ?
Dialogue: 0,0:09:11.06,0:09:13.48,Default,,0000,0000,0000,,Hình như không có trong danh bạ của mình đâu.
Dialogue: 0,0:09:13.94,0:09:16.06,Default,,0000,0000,0000,,Cứ gọi lại cho người ta là được mà?
Dialogue: 0,0:09:16.38,0:09:19.79,Default,,0000,0000,0000,,Thử bao nhiêu lần thì vẫn bị sập nguồn.
Dialogue: 0,0:09:20.37,0:09:22.87,Default,,0000,0000,0000,,Đây là chuyện quan trọng\Nnên cần mình điều tra nhỉ?
Dialogue: 0,0:09:23.12,0:09:23.74,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:09:24.54,0:09:26.55,Default,,0000,0000,0000,,Chuyện hôm nay là vậy đó.
Dialogue: 0,0:09:27.12,0:09:29.75,Default,,0000,0000,0000,,Tuy nhiên, không được bất cẩn gọi điện nhé.
Dialogue: 0,0:09:29.98,0:09:31.04,Default,,0000,0000,0000,,Đã rõ.
Dialogue: 0,0:09:32.62,0:09:34.18,Default,,0000,0000,0000,,Chỉ có chuyện này thôi à?
Dialogue: 0,0:09:34.61,0:09:35.63,Default,,0000,0000,0000,,Phải rồi...
Dialogue: 0,0:09:36.02,0:09:36.40,Default,,0000,0000,0000,,A!
Dialogue: 0,0:09:37.28,0:09:38.24,Default,,0000,0000,0000,,Sao thế?
Dialogue: 0,0:09:39.09,0:09:41.56,Default,,0000,0000,0000,,Đợt kiểm tra cuối năm này\Nliệu cậu có ổn không đó?
Dialogue: 0,0:09:42.08,0:09:43.94,Default,,0000,0000,0000,,Có lẽ sẽ khá là khó đấy.
Dialogue: 0,0:09:44.27,0:09:45.61,Default,,0000,0000,0000,,Hể!? Thật đấy à!?
Dialogue: 0,0:09:46.47,0:09:48.89,Default,,0000,0000,0000,,Nè... Cậu sẽ dạy mình học chứ?
Dialogue: 0,0:09:51.46,0:09:52.24,Default,,0000,0000,0000,,Không được sao?
Dialogue: 0,0:09:53.00,0:09:56.12,Default,,0000,0000,0000,,Không thể nào để cậu\Nhọc chung nhóm bọn tôi được.
Dialogue: 0,0:09:56.87,0:09:59.80,Default,,0000,0000,0000,,Chỉ còn nửa đêm thôi...\NNhư vậy có được không?
Dialogue: 0,0:10:00.26,0:10:02.47,Default,,0000,0000,0000,,Nếu bị đuổi học thì nguy lắm.
Dialogue: 0,0:10:02.71,0:10:03.40,Default,,0000,0000,0000,,Hẳn rồi.
Dialogue: 0,0:10:04.16,0:10:05.87,Default,,0000,0000,0000,,Vậy để tôi lên kế hoạch...
Dialogue: 0,0:10:06.97,0:10:08.15,Default,,0000,0000,0000,,Mong được chỉ giáo.
Dialogue: 0,0:10:08.27,0:10:09.10,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:10:09.12,0:10:10.02,Default,,0000,0000,0000,,Hẹn khi khác.
Dialogue: 0,0:10:10.02,0:10:11.42,Default,,0000,0000,0000,,A! Chờ chút!
Dialogue: 0,0:10:11.42,0:10:11.90,Default,,0000,0000,0000,,Hử?
Dialogue: 0,0:10:12.48,0:10:13.13,Default,,0000,0000,0000,,Chẳng là...
Dialogue: 0,0:10:14.67,0:10:16.93,Default,,0000,0000,0000,,Nè... Mình hỏi cậu được không?
Dialogue: 0,0:10:17.60,0:10:18.52,Default,,0000,0000,0000,,Hỏi gì?
Dialogue: 0,0:10:19.06,0:10:21.10,Default,,0000,0000,0000,,Hôm nay là ngày gì ấy nhỉ?
Dialogue: 0,0:10:23.46,0:10:24.98,Default,,0000,0000,0000,,Câu hỏi quá đơn giản...
Dialogue: 0,0:10:24.98,0:10:28.18,Default,,0000,0000,0000,,Ngược lại khiến tôi cảm thấy\Nđáp án nghĩ tới có lẽ không đúng...
Dialogue: 0,0:10:29.55,0:10:32.34,Default,,0000,0000,0000,,Đừng vòng vo nữa, trả lời thẳng thắn đi nào.
Dialogue: 0,0:10:33.19,0:10:33.76,Default,,0000,0000,0000,,Valen-
Dialogue: 0,0:10:33.76,0:10:35.10,Default,,0000,0000,0000,,Vâng, đúng rồi.
Dialogue: 0,0:10:35.79,0:10:37.14,Default,,0000,0000,0000,,Tặng tôi đấy à?
Dialogue: 0,0:10:37.32,0:10:40.98,Default,,0000,0000,0000,,Vốn dĩ mình chuẩn bị cho Yousuke-kun đấy...
Dialogue: 0,0:10:41.78,0:10:43.56,Default,,0000,0000,0000,,Nhưng đã không cần nữa rồi.
Dialogue: 0,0:10:44.22,0:10:46.70,Default,,0000,0000,0000,,Nhận thay Hirata... à?
Dialogue: 0,0:10:46.90,0:10:48.52,Default,,0000,0000,0000,,Gì đấy? Bất mãn à?
Dialogue: 0,0:10:48.52,0:10:49.30,Default,,0000,0000,0000,,Không...
Dialogue: 0,0:10:49.81,0:10:54.06,Default,,0000,0000,0000,,Chỉ là thấy có vẻ cậu\Nđã chuẩn bị cho Valentine từ lâu thôi.
Dialogue: 0,0:10:54.46,0:10:57.09,Default,,0000,0000,0000,,M-Mình là người cẩn thận như vậy đó.
Dialogue: 0,0:10:58.02,0:11:00.02,Default,,0000,0000,0000,,Cho dù có quyết định chia tay đi nữa...
Dialogue: 0,0:11:00.02,0:11:03.06,Default,,0000,0000,0000,,Thì biết đâu vẫn có thể cần dùng còn gì?
Dialogue: 0,0:11:04.28,0:11:05.96,Default,,0000,0000,0000,,Hóa ra là như thế à.
Dialogue: 0,0:11:06.24,0:11:10.69,Default,,0000,0000,0000,,Dù sao thì người thiếu kinh nghiệm\Ntình trường như cậu cũng không hiểu đâu.
Dialogue: 0,0:11:11.41,0:11:12.58,Default,,0000,0000,0000,,Hẳn là thế.
Dialogue: 0,0:11:12.96,0:11:17.42,Default,,0000,0000,0000,,Cứ tưởng cậu muốn được mình tặng\Nnên mới chọn ngày hôm nay đó...
Dialogue: 0,0:11:17.84,0:11:18.82,Default,,0000,0000,0000,,Xin lỗi nhé.
Dialogue: 0,0:11:19.10,0:11:21.18,Default,,0000,0000,0000,,Tôi chẳng mảy may nghĩ tới vụ đó.
Dialogue: 0,0:11:21.67,0:11:24.31,Default,,0000,0000,0000,,Mà này, cậu có được ai tặng chưa?
Dialogue: 0,0:11:24.84,0:11:26.56,Default,,0000,0000,0000,,Chưa, không có đâu.
Dialogue: 0,0:11:26.78,0:11:28.05,Default,,0000,0000,0000,,Trắng tay à?
Dialogue: 0,0:11:28.31,0:11:30.86,Default,,0000,0000,0000,,Đáng đời, cậu xứng đáng trắng tay lắm.
Dialogue: 0,0:11:31.44,0:11:32.72,Default,,0000,0000,0000,,Cũng không sai.
Dialogue: 0,0:11:33.22,0:11:34.50,Default,,0000,0000,0000,,Nhưng như này cũng được sao?
Dialogue: 0,0:11:34.70,0:11:37.08,Default,,0000,0000,0000,,Nếu được cậu tặng thì tôi sẽ hết trắng tay đấy.
Dialogue: 0,0:11:37.35,0:11:39.84,Default,,0000,0000,0000,,Để vậy thì cũng đáng thương quá...
Dialogue: 0,0:11:39.84,0:11:42.79,Default,,0000,0000,0000,,Cứ coi như hàng cứu trợ của mình đi.
Dialogue: 0,0:11:43.12,0:11:43.86,Default,,0000,0000,0000,,A!
Dialogue: 0,0:11:43.86,0:11:46.85,Default,,0000,0000,0000,,Cứ mua quà đáp lễ đắt gấp đôi là được.
Dialogue: 0,0:11:47.05,0:11:48.92,Default,,0000,0000,0000,,Có cả vụ đó nữa à?
Dialogue: 0,0:11:49.50,0:11:51.33,Default,,0000,0000,0000,,Có vụ như vậy đấy.
Dialogue: 0,0:11:52.04,0:11:54.03,Default,,0000,0000,0000,,Tặng sô-cô-la Valentine sao?
Dialogue: 0,0:11:54.70,0:11:58.86,Default,,0000,0000,0000,,Nếu là chuyện yêu đương thì\Ntiến triển tiếp theo chắc chẳng thú vị gì đâu...
Dialogue: 0,0:11:59.86,0:12:00.48,Default,,0000,0000,0000,,À không...
Dialogue: 0,0:12:05.00,0:12:06.10,Default,,0000,0000,0000,,Mà này...
Dialogue: 0,0:12:06.10,0:12:06.63,Default,,0000,0000,0000,,Hử?
Dialogue: 0,0:12:12.21,0:12:14.92,Default,,0000,0000,0000,,V-Vậy mình về nhé.
Dialogue: 0,0:12:15.27,0:12:16.20,Default,,0000,0000,0000,,Xin chào!
Dialogue: 0,0:12:17.27,0:12:18.48,Default,,0000,0000,0000,,Hai bạn đằng đó ơi~
Dialogue: 0,0:12:30.26,0:12:32.54,Default,,0000,0000,0000,,Cậu là... ai vậy?
Dialogue: 0,0:12:32.75,0:12:34.51,Default,,0000,0000,0000,,Hashimoto của lớp A.
Dialogue: 0,0:12:35.23,0:12:37.57,Default,,0000,0000,0000,,Cậu ta cùng nhóm với tôi\Ntrong đợt ngoại khóa trước.
Dialogue: 0,0:12:38.40,0:12:40.25,Default,,0000,0000,0000,,Hẹn gặp bí mật ở đây à?
Dialogue: 0,0:12:40.97,0:12:43.49,Default,,0000,0000,0000,,Đúng là không thể xem thường cậu, Ayanokouji.
Dialogue: 0,0:12:44.09,0:12:45.91,Default,,0000,0000,0000,,Có phải hẹn gặp bí mật hay gì đâu.
Dialogue: 0,0:12:46.12,0:12:47.19,Default,,0000,0000,0000,,Cần gì phải giấu.
Dialogue: 0,0:12:47.63,0:12:49.29,Default,,0000,0000,0000,,Hôm nay là Valentine mà.
Dialogue: 0,0:12:50.25,0:12:52.94,Default,,0000,0000,0000,,Có phải gặp nhau vì Valentine đâu.
Dialogue: 0,0:12:53.39,0:12:56.49,Default,,0000,0000,0000,,Không không, nhận sô-cô-la rồi mà.
Dialogue: 0,0:12:57.51,0:12:59.87,Default,,0000,0000,0000,,Tôi trên đường đến thư viện...
Dialogue: 0,0:12:59.87,0:13:02.95,Default,,0000,0000,0000,,Thì bị Karuizawa gọi mà đến đây thôi.
Dialogue: 0,0:13:03.44,0:13:06.23,Default,,0000,0000,0000,,Mà, nói kiểu gì cũng giống nhau cả thôi.
Dialogue: 0,0:13:06.33,0:13:10.99,Default,,0000,0000,0000,,Tôi không hiểu lắm...\Nnhưng có vấn đề gì sao?
Dialogue: 0,0:13:11.23,0:13:12.81,Default,,0000,0000,0000,,Thì quái lạ lắm mà?
Dialogue: 0,0:13:13.39,0:13:16.48,Default,,0000,0000,0000,,Bạn trai cũ của Karuizawa\Nlà cái cậu Hirata nổi tiếng đó...
Dialogue: 0,0:13:16.79,0:13:20.01,Default,,0000,0000,0000,,Đá cả Hirata mà chọn Ayanokouji thế này...
Dialogue: 0,0:13:20.91,0:13:22.83,Default,,0000,0000,0000,,Nói đơn giản là khiến tôi tò mò đó.
Dialogue: 0,0:13:23.51,0:13:24.82,Default,,0000,0000,0000,,À, xin lỗi.
Dialogue: 0,0:13:25.13,0:13:27.55,Default,,0000,0000,0000,,Này nhé, cậu đang hiểu nhầm đấy.
Dialogue: 0,0:13:27.97,0:13:28.89,Default,,0000,0000,0000,,Hiểu nhầm?
Dialogue: 0,0:13:28.89,0:13:29.68,Default,,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:13:30.22,0:13:32.99,Default,,0000,0000,0000,,Mình vốn định tặng cho Hirata-kun...
Dialogue: 0,0:13:33.23,0:13:35.66,Default,,0000,0000,0000,,Nhưng vứt đi thì thấy tiếc...
Dialogue: 0,0:13:36.15,0:13:39.12,Default,,0000,0000,0000,,Nên mới chọn bừa Ayanokouji-kun để tặng thôi.
Dialogue: 0,0:13:39.31,0:13:42.76,Default,,0000,0000,0000,,Đưa sô-cô-la một cách tình cảm như thế\Nmà lại bảo chọn bừa à?
Dialogue: 0,0:13:43.15,0:13:45.23,Default,,0000,0000,0000,,Xin lỗi, tôi không thấy vậy đâu.
Dialogue: 0,0:13:45.41,0:13:46.50,Default,,0000,0000,0000,,Hả?
Dialogue: 0,0:13:46.50,0:13:49.28,Default,,0000,0000,0000,,Cậu tự dưng xuất hiện\Nrồi nói linh ta linh tinh...
Dialogue: 0,0:13:49.28,0:13:50.77,Default,,0000,0000,0000,,Rốt cuộc là có ý gì hả?
Dialogue: 0,0:13:51.08,0:13:54.23,Default,,0000,0000,0000,,Tôi chỉ muốn biết sự thật mà thôi.
Dialogue: 0,0:13:54.81,0:13:57.71,Default,,0000,0000,0000,,Thôi, cứ nói thật cho cậu ta đi.
Dialogue: 0,0:13:58.30,0:14:02.25,Default,,0000,0000,0000,,Cứ che giấu thế này\Nthì về sau sẽ càng phiền phức thôi.
Dialogue: 0,0:14:02.93,0:14:06.41,Default,,0000,0000,0000,,Bị người ta nghĩ đang cặp với tôi\Nthì cậu cũng thấy phiền đúng không?
Dialogue: 0,0:14:08.99,0:14:12.31,Default,,0000,0000,0000,,Nói trước, đừng có mà bép xép với ai đấy.
Dialogue: 0,0:14:12.71,0:14:13.41,Default,,0000,0000,0000,,Dĩ nhiên.
Dialogue: 0,0:14:14.38,0:14:17.44,Default,,0000,0000,0000,,Mình chỉ nhờ Ayanokouji-kun cầm hộ sô-cô-la thôi.
Dialogue: 0,0:14:17.94,0:14:20.57,Default,,0000,0000,0000,,Để tặng cho người mình thực sự thích.
Dialogue: 0,0:14:21.14,0:14:23.97,Default,,0000,0000,0000,,Nghĩa là Ayanokouji\Nlà người chuyển phát trung gian à?
Dialogue: 0,0:14:24.21,0:14:25.58,Default,,0000,0000,0000,,Đúng là vậy.
Dialogue: 0,0:14:25.85,0:14:26.98,Default,,0000,0000,0000,,Hiểu chưa nào?
Dialogue: 0,0:14:27.14,0:14:29.72,Default,,0000,0000,0000,,Nếu vậy thì sô-cô-la đó là tặng cho ai vậy?
Dialogue: 0,0:14:29.72,0:14:30.63,Default,,0000,0000,0000,,Hả?
Dialogue: 0,0:14:30.63,0:14:33.41,Default,,0000,0000,0000,,Làm gì có chuyện mình nói cho\Nngười mới gặp lần đầu chứ!
Dialogue: 0,0:14:33.53,0:14:34.53,Default,,0000,0000,0000,,Cậu bị ngốc à?
Dialogue: 0,0:14:34.76,0:14:35.82,Default,,0000,0000,0000,,Cái đó thì...
Dialogue: 0,0:14:36.71,0:14:37.77,Default,,0000,0000,0000,,Mà cũng đúng.
Dialogue: 0,0:14:38.02,0:14:40.06,Default,,0000,0000,0000,,Đúng kiểu "tha tôi đi người ơi" luôn.
Dialogue: 0,0:14:41.95,0:14:44.45,Default,,0000,0000,0000,,Có vẻ tôi hiểu lầm mất rồi.
Dialogue: 0,0:14:45.28,0:14:48.19,Default,,0000,0000,0000,,Cứ tưởng hai người\Nphải có quan hệ đặc biệt gì cơ.
Dialogue: 0,0:14:48.59,0:14:52.58,Default,,0000,0000,0000,,Với lại người không liên quan gì như cậu\Nthì xía mũi vào làm gì?
Dialogue: 0,0:14:54.38,0:14:58.99,Default,,0000,0000,0000,,Ấy không, không phải không liên quan đâu.
Dialogue: 0,0:14:58.99,0:15:00.31,Default,,0000,0000,0000,,Này! Làm cái gì vậy?
Dialogue: 0,0:15:02.38,0:15:04.73,Default,,0000,0000,0000,,Tôi cũng đã thích cậu từ lâu rồi.
Dialogue: 0,0:15:05.26,0:15:07.99,Default,,0000,0000,0000,,Hẹn hò với tôi đi, Karuizawa.
Dialogue: 0,0:15:08.58,0:15:09.62,Default,,0000,0000,0000,,Hả...
Dialogue: 0,0:15:10.01,0:15:12.86,Default,,0000,0000,0000,,Dù không biết đối tượng cậu thích lần này là ai...
Dialogue: 0,0:15:13.15,0:15:15.39,Default,,0000,0000,0000,,Nhưng vẫn chưa tỏ tình đúng không?
Dialogue: 0,0:15:16.46,0:15:17.87,Default,,0000,0000,0000,,Nói cái gì đấy hả?
Dialogue: 0,0:15:18.05,0:15:20.83,Default,,0000,0000,0000,,Trong cái tình thế này,\Ncậu nghĩ tôi đồng ý nổi sao?
Dialogue: 0,0:15:21.19,0:15:25.31,Default,,0000,0000,0000,,Chính vì không thể đoán trước được gì,\Nnên tình yêu mới thú vị đấy.
Dialogue: 0,0:15:25.70,0:15:28.21,Default,,0000,0000,0000,,Thế nhé, tôi đi trước đây.
Dialogue: 0,0:15:28.21,0:15:29.05,Default,,0000,0000,0000,,Ơ, này!
Dialogue: 0,0:15:29.05,0:15:30.18,Default,,0000,0000,0000,,Hả? Khoan-
Dialogue: 0,0:15:30.38,0:15:31.85,Default,,0000,0000,0000,,Mình cũng về đây!
Dialogue: 0,0:15:33.41,0:15:34.69,Default,,0000,0000,0000,,Chẳng dễ thương chút nào.
Dialogue: 0,0:15:35.06,0:15:36.33,Default,,0000,0000,0000,,Tệ hết chỗ nói!
Dialogue: 0,0:15:38.22,0:15:40.13,Default,,0000,0000,0000,,Xin lỗi nhé, Ayanokouji.
Dialogue: 0,0:15:40.67,0:15:42.23,Default,,0000,0000,0000,,Tự dưng xen ngang lúc nhạy cảm.
Dialogue: 0,0:15:42.70,0:15:43.85,Default,,0000,0000,0000,,Không, chẳng có gì đâu.
Dialogue: 0,0:15:44.44,0:15:47.21,Default,,0000,0000,0000,,Tôi cũng muốn nói nhiều chuyện với cậu.
Dialogue: 0,0:15:47.34,0:15:49.28,Default,,0000,0000,0000,,Trao đổi liên lạc với tôi đi.
Dialogue: 0,0:15:50.51,0:15:51.36,Default,,0000,0000,0000,,Hiểu rồi.
Dialogue: 0,0:15:56.49,0:15:57.41,Default,,0000,0000,0000,,Cảm ơn nhé.
Dialogue: 0,0:15:58.55,0:16:00.97,Default,,0000,0000,0000,,Thôi, hôm nay cứ về đi nhỉ.
Dialogue: 0,0:16:01.91,0:16:03.79,Default,,0000,0000,0000,,Hẹn gặp lại, Ayanokouji.
Dialogue: 0,0:16:04.33,0:16:04.92,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:16:12.42,0:16:15.45,Default,,0000,0000,0000,,Không ngờ nhận được hẳn năm phần.
Dialogue: 0,0:16:12.95,0:16:15.91,On Top,,0000,0000,0000,,(Hồng xanh: Airi - Lục: Haruka)
Dialogue: 0,0:16:18.83,0:16:20.11,Default,,0000,0000,0000,,Cũng đến lúc rồi.
Dialogue: 0,0:16:41.45,0:16:42.08,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:16:42.56,0:16:45.20,Default,,0000,0000,0000,,Ichinose, là tôi, Ayanokouji đây.
Dialogue: 0,0:16:45.83,0:16:48.81,Default,,0000,0000,0000,,Ayanokouji-kun? Sao cậu lại ở đây?
Dialogue: 0,0:16:49.77,0:16:51.05,Default,,0000,0000,0000,,Có vẻ khổ nhỉ?
Dialogue: 0,0:16:51.81,0:16:52.58,Default,,0000,0000,0000,,Bị cảm à?
Dialogue: 0,0:16:53.05,0:16:56.57,Default,,0000,0000,0000,,Ừm, thế nên hôm nay có hơi...
Dialogue: 0,0:16:57.17,0:16:59.64,Default,,0000,0000,0000,,Tôi đang nghĩ cậu ăn uống không được tử tế...
Dialogue: 0,0:17:00.81,0:17:02.48,Default,,0000,0000,0000,,Nếu là cháo thì có ăn được không?
Dialogue: 0,0:17:03.08,0:17:03.93,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:17:04.60,0:17:07.08,Default,,0000,0000,0000,,Bị ai đó thấy sẽ phiền phức đấy.
Dialogue: 0,0:17:07.60,0:17:09.68,Default,,0000,0000,0000,,Cứ coi như vì tôi đến thăm bệnh mà nhận đi.
Dialogue: 0,0:17:10.80,0:17:11.68,Default,,0000,0000,0000,,Đợi chút nhé.
Dialogue: 0,0:17:15.36,0:17:18.64,Default,,0000,0000,0000,,Hơi gượng ép rồi đó, Ayanokouji-kun.
Dialogue: 0,0:17:19.24,0:17:20.20,Default,,0000,0000,0000,,Xin lỗi.
Dialogue: 0,0:17:21.24,0:17:21.85,Default,,0000,0000,0000,,Đây.
Dialogue: 0,0:17:22.41,0:17:24.27,Default,,0000,0000,0000,,A! Cảm ơn cậu.
Dialogue: 0,0:17:27.15,0:17:28.10,Default,,0000,0000,0000,,Xin lỗi nhé.
Dialogue: 0,0:17:28.43,0:17:29.38,Default,,0000,0000,0000,,Có ổn không đó?
Dialogue: 0,0:17:31.34,0:17:34.46,Default,,0000,0000,0000,,Nếu được thì cậu vào trong nhé.
Dialogue: 0,0:17:39.92,0:17:41.09,Default,,0000,0000,0000,,Ổn định lại chưa?
Dialogue: 0,0:17:41.69,0:17:43.96,Default,,0000,0000,0000,,Cảm ơn cậu, mình không sao nữa rồi.
Dialogue: 0,0:17:44.66,0:17:47.89,Default,,0000,0000,0000,,Với cả, đáng ra cứ gọi điện là được rồi mà?
Dialogue: 0,0:17:48.30,0:17:50.40,Default,,0000,0000,0000,,Tôi muốn nói chuyện trực tiếp với cậu mà.
Dialogue: 0,0:17:50.99,0:17:52.76,Default,,0000,0000,0000,,Xin lỗi, phiền cậu vào lúc thế này.
Dialogue: 0,0:17:54.05,0:17:55.28,Default,,0000,0000,0000,,Đến bệnh viện chưa?
Dialogue: 0,0:17:55.47,0:17:57.66,Default,,0000,0000,0000,,Mình đi rồi, bác sĩ bảo bị cảm.
Dialogue: 0,0:17:57.80,0:17:58.54,Default,,0000,0000,0000,,Vậy à?
Dialogue: 0,0:17:59.20,0:18:03.10,Default,,0000,0000,0000,,Xin lỗi nhé, khiến cả Ayanokouji-kun\Nphải đeo khẩu trang rồi.
Dialogue: 0,0:18:04.06,0:18:06.90,Default,,0000,0000,0000,,Mình không muốn lây cảm cho cậu đâu.
Dialogue: 0,0:18:08.32,0:18:10.72,Default,,0000,0000,0000,,Thể trạng cũng dần cải thiện rồi...
Dialogue: 0,0:18:10.74,0:18:12.96,Default,,0000,0000,0000,,Vừa rồi thì biết nói sao nhỉ...
Dialogue: 0,0:18:12.96,0:18:15.77,Default,,0000,0000,0000,,Kiểu ngủ nhiều quá với cái bụng đói nên lả đi ấy?
Dialogue: 0,0:18:16.96,0:18:18.60,Default,,0000,0000,0000,,Đây là... cháo à!?
Dialogue: 0,0:18:18.96,0:18:20.25,Default,,0000,0000,0000,,Do Ayanokouji-kun nấu sao?
Dialogue: 0,0:18:20.51,0:18:21.08,Default,,0000,0000,0000,,Đúng vậy?
Dialogue: 0,0:18:21.87,0:18:23.07,Default,,0000,0000,0000,,Vậy à...
Dialogue: 0,0:18:23.42,0:18:25.70,Default,,0000,0000,0000,,Có lẽ cũng lâu rồi mình mới ăn gạo.
Dialogue: 0,0:18:26.04,0:18:28.22,Default,,0000,0000,0000,,Phải ăn uống tử tế đi chứ.
Dialogue: 0,0:18:29.80,0:18:32.94,Default,,0000,0000,0000,,Lâu lắm rồi, mình mới gặp mặt người khác đó.
Dialogue: 0,0:18:32.94,0:18:34.30,Default,,0000,0000,0000,,Vậy sao?
Dialogue: 0,0:18:35.34,0:18:39.25,Default,,0000,0000,0000,,Các bạn đã đến thăm bệnh\Nnhưng đều bị mình từ chối không gặp.
Dialogue: 0,0:18:39.74,0:18:43.63,Default,,0000,0000,0000,,Có vẻ sau đó mọi người lại nghĩ\Nmình đang trầm cảm...
Dialogue: 0,0:18:43.87,0:18:45.17,Default,,0000,0000,0000,,Nên ngại không đến.
Dialogue: 0,0:18:46.72,0:18:49.44,Default,,0000,0000,0000,,Việc Ayanokouji-kun\Nmuốn trực tiếp nói chuyện với mình...
Dialogue: 0,0:18:50.08,0:18:54.48,Default,,0000,0000,0000,,có phải lo lắng vụ nghỉ học\Ntất cả là tại tin đồn đúng không?
Dialogue: 0,0:18:55.00,0:18:55.96,Default,,0000,0000,0000,,Cảm ơn cậu.
Dialogue: 0,0:18:57.28,0:19:01.60,Default,,0000,0000,0000,,Nhưng với mình thì chỉ tin đồn cỡ đó\Nsẽ không có chuyện nghỉ học đâu.
Dialogue: 0,0:19:01.88,0:19:03.34,Default,,0000,0000,0000,,Mạnh mẽ thật.
Dialogue: 0,0:19:04.24,0:19:06.60,Default,,0000,0000,0000,,Mạnh mẽ sao... đúng ra là...
Dialogue: 0,0:19:07.40,0:19:09.02,Default,,0000,0000,0000,,Dù có cố tỏ ra mạnh mẽ...
Dialogue: 0,0:19:09.61,0:19:13.64,Default,,0000,0000,0000,,Nhưng việc giảm khả năng miễn dịch\Ndo tổn thương tâm lý khá là nặng đây.
Dialogue: 0,0:19:16.35,0:19:20.50,Default,,0000,0000,0000,,À, cậu ở lâu với mình sẽ bị lây cảm mất.
Dialogue: 0,0:19:21.29,0:19:22.25,Default,,0000,0000,0000,,Tôi cũng xin lỗi.
Dialogue: 0,0:19:22.25,0:19:24.74,Default,,0000,0000,0000,,Làm phiền lúc cậu đang nghỉ ngơi rồi.
Dialogue: 0,0:19:24.89,0:19:25.84,Default,,0000,0000,0000,,Không đâu.
Dialogue: 0,0:19:26.13,0:19:27.96,Default,,0000,0000,0000,,Cảm ơn vì đã đến thăm mình.
Dialogue: 0,0:19:28.18,0:19:30.69,Default,,0000,0000,0000,,Ừ, đừng có cố quá nhé.
Dialogue: 0,0:19:34.52,0:19:35.54,Default,,0000,0000,0000,,Như này là ổn rồi.
Dialogue: 0,0:19:36.01,0:19:36.94,Default,,0000,0000,0000,,Này, này!
Dialogue: 0,0:19:36.94,0:19:38.44,Default,,0000,0000,0000,,- Cái gì thế này?\N- Đùa thôi đúng không?
Dialogue: 0,0:19:38.51,0:19:41.10,Default,,0000,0000,0000,,- Cái gì? Gửi cho tất cả sao!?\N- A-Ai làm cái trò này vậy?!
Dialogue: 0,0:19:41.40,0:19:42.90,Default,,0000,0000,0000,,Đây là thật sao?
Dialogue: 0,0:19:42.91,0:19:44.16,Default,,0000,0000,0000,,Toang nhờ!
Dialogue: 0,0:19:43.80,0:19:46.05,On Top,,0000,0000,0000,,(Ayanokouji Kiyotaka đang thích Karuizawa Kei)
Dialogue: 0,0:19:44.20,0:19:45.70,Default,,0000,0000,0000,,Chẳng nhận ra tí nào luôn.
Dialogue: 0,0:19:45.70,0:19:47.42,Default,,0000,0000,0000,,Xấu tính quá đáng rồi!
Dialogue: 0,0:19:46.05,0:19:48.30,On Top,,0000,0000,0000,,(Hondou Ryoutarou chỉ thích gái béo phì)
Dialogue: 0,0:19:47.42,0:19:50.22,Default,,0000,0000,0000,,Lúc mình đến lớp thì nó đã lan rộng rồi.
Dialogue: 0,0:19:48.30,0:19:50.55,On Top,,0000,0000,0000,,(Shinohara Satsuki bán dâm từ hồi trung học)
Dialogue: 0,0:19:50.55,0:19:52.80,On Top,,0000,0000,0000,,(Satou Maya ghét Onodera Kayano)
Dialogue: 0,0:19:55.38,0:19:56.52,Default,,0000,0000,0000,,Không thể tha thứ!
Dialogue: 0,0:19:56.91,0:20:00.00,Default,,0000,0000,0000,,Satou vốn ghét Onodera nhờ!
Dialogue: 0,0:20:00.48,0:20:01.54,Default,,0000,0000,0000,,Không phải vậy!
Dialogue: 0,0:20:01.54,0:20:03.64,Default,,0000,0000,0000,,Cái này rõ ràng là dựng chuyện!
Dialogue: 0,0:20:03.64,0:20:08.32,Default,,0000,0000,0000,,Vậy thì để tôi gọi cho Onodera\Nxác nhận một phát cũng được nhỉ?
Dialogue: 0,0:20:08.43,0:20:09.31,Default,,0000,0000,0000,,Đừng có làm thế!
Dialogue: 0,0:20:09.61,0:20:12.86,Default,,0000,0000,0000,,Nếu không phải thì có hỏi cũng đâu làm sao?
Dialogue: 0,0:20:13.13,0:20:14.52,Default,,0000,0000,0000,,Yamauchi-kun tồi tệ.
Dialogue: 0,0:20:14.52,0:20:15.10,Default,,0000,0000,0000,,Lắm chuyện!
Dialogue: 0,0:20:15.10,0:20:16.56,Default,,0000,0000,0000,,Dừng lại đi mà.
Dialogue: 0,0:20:16.56,0:20:19.82,Default,,0000,0000,0000,,Tớ chỉ gọi xác nhận xem\Ncó phải thật hay không thôi mà.
Dialogue: 0,0:20:20.48,0:20:21.82,Default,,0000,0000,0000,,Này, Hondou!
Dialogue: 0,0:20:22.50,0:20:24.22,Default,,0000,0000,0000,,Vụ của chú là thật à?
Dialogue: 0,0:20:25.10,0:20:27.17,Default,,0000,0000,0000,,Ô! Ayanokouji!
Dialogue: 0,0:20:27.22,0:20:30.24,Default,,0000,0000,0000,,Hóa ra cậu thích Karuizawa à?
Dialogue: 0,0:20:30.54,0:20:31.26,Default,,0000,0000,0000,,Không có đâu.
Dialogue: 0,0:20:31.72,0:20:33.82,Default,,0000,0000,0000,,Cái gì, không phải à!?
Dialogue: 0,0:20:33.82,0:20:35.38,Default,,0000,0000,0000,,Chán thế nhở.
Dialogue: 0,0:20:37.44,0:20:39.82,Default,,0000,0000,0000,,Có những tin đồn xấu\Nđang được viết lên bảng tin.
Dialogue: 0,0:20:40.56,0:20:41.77,Default,,0000,0000,0000,,Cả cậu cũng dính đấy.
Dialogue: 0,0:20:42.12,0:20:45.14,Default,,0000,0000,0000,,Shinohara~
Dialogue: 0,0:20:45.14,0:20:47.24,Default,,0000,0000,0000,,Hóa ra cậu đi bán dâm à?
Dialogue: 0,0:20:47.31,0:20:48.38,Default,,0000,0000,0000,,Tôi không làm!
Dialogue: 0,0:20:48.38,0:20:50.84,Default,,0000,0000,0000,,Yamauchi! Vừa vừa phai phải thôi!
Dialogue: 0,0:20:50.84,0:20:52.24,Default,,0000,0000,0000,,Có gì mà phải giấu.
Dialogue: 0,0:20:52.33,0:20:53.46,Default,,0000,0000,0000,,Bị ngu à?
Dialogue: 0,0:20:53.46,0:20:55.80,Default,,0000,0000,0000,,Lan truyền những lời đồn tùy tiện như thế...
Dialogue: 0,0:20:55.80,0:20:58.16,Default,,0000,0000,0000,,Có khi nào chính cậu là người viết không?
Dialogue: 0,0:20:58.16,0:21:00.32,Default,,0000,0000,0000,,Hả? Có phải tôi đâu.
Dialogue: 0,0:21:00.73,0:21:03.82,Default,,0000,0000,0000,,Chịu hết nổi rồi! Nói thật xem nào!
Dialogue: 0,0:21:03.82,0:21:06.48,Default,,0000,0000,0000,,Ai đã viết những lời dối trá này vậy?!
Dialogue: 0,0:21:06.52,0:21:09.65,Default,,0000,0000,0000,,Người ta bảo không có lửa thì làm sao có khói.
Dialogue: 0,0:21:09.66,0:21:10.85,Default,,0000,0000,0000,,Im hộ cái!
Dialogue: 0,0:21:10.89,0:21:15.38,Default,,0000,0000,0000,,Thì bởi mấy đứa bị đồn thế này\Ncó khi lại thật sự có vấn đề ấy.
Dialogue: 0,0:21:15.65,0:21:17.08,Default,,0000,0000,0000,,Ầy, nghiêm túc đấy.
Dialogue: 0,0:21:17.40,0:21:20.09,Default,,0000,0000,0000,,Thôi nào, cứ nói thật ra xem~
Dialogue: 0,0:21:20.12,0:21:21.02,Default,,0000,0000,0000,,Yamauchi!
Dialogue: 0,0:21:21.06,0:21:22.16,Default,,0000,0000,0000,,Khoan đã!
Dialogue: 0,0:21:22.46,0:21:24.60,Default,,0000,0000,0000,,Yamauchi cũng dừng lại đi.
Dialogue: 0,0:21:24.86,0:21:26.06,Default,,0000,0000,0000,,Tại sao?
Dialogue: 0,0:21:26.20,0:21:29.69,Default,,0000,0000,0000,,Shinohara lúc nào cũng vênh mặt còn gì,\Nđây là cơ hội trả đũa đấy.
Dialogue: 0,0:21:29.94,0:21:31.10,Default,,0000,0000,0000,,Trả đũa!?
Dialogue: 0,0:21:31.82,0:21:33.37,Default,,0000,0000,0000,,Cậu ấy bảo đó là dối trá còn gì!
Dialogue: 0,0:21:33.81,0:21:35.32,Default,,0000,0000,0000,,Chưa biết được đâu.
Dialogue: 0,0:21:35.55,0:21:39.48,Default,,0000,0000,0000,,Mấy đứa con gái nhàm chán như thế\Nmới lại hay làm trò xấu xa ấy.
Dialogue: 0,0:21:39.53,0:21:41.08,Default,,0000,0000,0000,,Làm sao mà có chuyện đó được!
Dialogue: 0,0:21:41.08,0:21:42.72,Default,,0000,0000,0000,,Mình tuyệt đối không làm mà...
Dialogue: 0,0:21:43.06,0:21:44.46,Default,,0000,0000,0000,,Thôi, dừng lại đi!
Dialogue: 0,0:21:44.58,0:21:47.07,Default,,0000,0000,0000,,Gì chứ! Chán chết!
Dialogue: 0,0:21:47.21,0:21:49.58,Default,,0000,0000,0000,,Nhưng mà, Satou-san hình như...
Dialogue: 0,0:21:49.96,0:21:52.56,Default,,0000,0000,0000,,thật sự không ưa Onodera-san lắm nhỉ?
Dialogue: 0,0:21:52.89,0:21:55.67,Default,,0000,0000,0000,,C-Cậu cũng dừng lại đi, Miyamoto-kun!
Dialogue: 0,0:21:56.04,0:22:00.30,Default,,0000,0000,0000,,Cơ mà đúng là chưa từng thấy\NSatou chơi cùng Onodera bao giờ hết.
Dialogue: 0,0:22:00.58,0:22:02.54,Default,,0000,0000,0000,,C-Chuyện đó...
Dialogue: 0,0:22:03.10,0:22:04.38,Default,,0000,0000,0000,,Tệ hết sức rồi...
Dialogue: 0,0:22:04.94,0:22:07.56,Default,,0000,0000,0000,,Mãi mới khiến cả lớp đoàn kết mà lại thế này.
Dialogue: 0,0:22:10.48,0:22:13.29,Default,,0000,0000,0000,,Everybody, Up and Down
Dialogue: 0,0:22:13.29,0:22:16.31,Default,,0000,0000,0000,,Nhận biết khí thế, Bad End Girl
Dialogue: 0,0:22:16.31,0:22:17.86,Default,,0000,0000,0000,,Hey Yo! Hey Yo!
Dialogue: 0,0:22:17.86,0:22:21.41,Default,,0000,0000,0000,,Sự thật＝Khác với tiểu thuyết
Dialogue: 0,0:22:22.08,0:22:23.80,Default,,0000,0000,0000,,Toan tính vụ lợi tầm thường
Dialogue: 0,0:22:23.80,0:22:25.30,Default,,0000,0000,0000,,Cấu thành tư duy lý tưởng
Dialogue: 0,0:22:25.30,0:22:28.70,Default,,0000,0000,0000,,Học hỏi tiền nhân, xoay chuyển dị điểm
Dialogue: 0,0:22:28.70,0:22:29.87,Default,,0000,0000,0000,,Dựa vào A, B, C, D
Dialogue: 0,0:22:29.87,0:22:31.33,Default,,0000,0000,0000,,Winner - Loser
Dialogue: 0,0:22:31.33,0:22:34.27,Default,,0000,0000,0000,,Chi tiết thì cứ dựa vào xếp hạng
Dialogue: 0,0:22:34.27,0:22:35.60,Default,,0000,0000,0000,,Ý nghĩa của việc tồn tại
Dialogue: 0,0:22:35.60,0:22:37.19,Default,,0000,0000,0000,,Cảm giác ngạt thở
Dialogue: 0,0:22:37.19,0:22:38.84,Default,,0000,0000,0000,,Bắt đầu từ dưới đáy
Dialogue: 0,0:22:38.84,0:22:40.74,Default,,0000,0000,0000,,Khác biệt cá tính
Dialogue: 0,0:22:40.74,0:22:43.56,Default,,0000,0000,0000,,Đành như vậy? Đành như vậy? Đành như vậy sao?
Dialogue: 0,0:22:43.56,0:22:45.60,Default,,0000,0000,0000,,Chỉ số giới hạn của DNA?
Dialogue: 0,0:22:46.46,0:22:49.32,Default,,0000,0000,0000,,Đáp án bất bình đẳng (All right)
Dialogue: 0,0:22:49.32,0:22:52.34,Default,,0000,0000,0000,,Không đánh gục nó thì chẳng thể đi tiếp
Dialogue: 0,0:22:52.34,0:22:55.48,Default,,0000,0000,0000,,Tiến triển lãng mạn (Oh my god)
