Dialogue: 0,0:00:01.87,0:00:05.83,Top,,0,0,0,,(Con người nhìn người khác\Nnhư những con sói hung dữ)
Dialogue: 0,0:00:05.83,0:00:11.96,Top,,0,0,0,,(Trích [Asinaria] của Plautus)
Dialogue: 0,0:00:16.73,0:00:17.96,Top,,0,0,0,,(Cẩn thận lợn rừng)
Dialogue: 0,0:04:31.39,0:04:33.98,Top,,0,0,0,,Con lợn rừng là do ai bắt vậy?
Dialogue: 0,0:04:35.11,0:04:37.52,Top,,0,0,0,,Chắc là thợ săn địa phương rồi.
Dialogue: 0,0:10:51.35,0:10:55.57,Top,,0,0,0,,Thay vào đó, tôi nghĩ là quá hợp\Nđể làm chân bứt tốc khi xuống dốc đó.
Dialogue: 0,0:10:55.57,0:10:57.15,Top,,0,0,0,,Just leave it to me!
Dialogue: 0,0:10:57.15,0:10:58.86,Top,,0,0,0,,Hử!? Vừa nói gì thế?
Dialogue: 0,0:10:58.86,0:11:00.57,Top,,0,0,0,,Ý bảo cứ để cậu ấy lo đó.
Dialogue: 0,0:11:18.30,0:11:20.92,Top,,0,0,0,,Mi-chan ở trong nhóm của Ichinose-san nhỉ.
Dialogue: 0,0:11:20.92,0:11:24.85,Top,,0,0,0,,Nhóm chẳng có ai cùng lớp mình cả.\NThế thì vất vả lắm nhỉ.
Dialogue: 0,0:13:35.23,0:13:37.81,Top,,0,0,0,,(Ngày cuối cùng của Tập Huấn Hỗn Hợp)
Dialogue: 0,0:13:37.81,0:13:39.86,Top,,0,0,0,,(Bài thi thứ nhất: Thiền)
Dialogue: 0,0:13:42.86,0:13:44.86,Top,,0,0,0,,(Bài thi thứ hai: Bài thi viết)
Dialogue: 0,0:13:47.04,0:13:50.62,Top,,0,0,0,,(Bài thi thứ ba: Hùng biện)
Dialogue: 0,0:13:56.33,0:14:02.38,Top,,0,0,0,,(Bài thi thứ tư: Chạy tiếp sức)
Dialogue: 0,0:14:02.46,0:14:05.09,Top,,0,0,0,,(Nhóm Yukimura - Người chạy 1: Sumida)
Dialogue: 0,0:14:05.85,0:14:07.09,Top,,0,0,0,,(←Suối nước nóng Ichi 780m Sông Ouma 350m→)
Dialogue: 0,0:14:10.39,0:14:12.10,Top,,0,0,0,,(Người chạy 2: Moriyama)
Dialogue: 0,0:14:14.60,0:14:18.06,Top,,0,0,0,,(Người chạy 3: Totsuka)
