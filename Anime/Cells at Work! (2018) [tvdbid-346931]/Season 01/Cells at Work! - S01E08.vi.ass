Dialogue: 0,0:11:58.63,0:12:00.80,Default,NTP,0,0,0,,Đang ở đây
Dialogue: 0,0:12:05.89,0:12:07.72,Default,NTP,0,0,0,,Rơi mũ rồi!
Dialogue: 0,0:12:07.72,0:12:09.98,Default,NTP,0,0,0,,Xin lỗi, người trước cô làm rơi đồ này.
Dialogue: 0,0:12:11.48,0:12:12.48,Default,NTP,0,0,0,,{\i1}Động mạch phổi.{\i0}
Dialogue: 0,0:12:12.90,0:12:15.27,Default,NTP,0,0,0,,{\i1}Động mạch bơm máu tĩnh mạch vào phổi.{\i0}
Dialogue: 0,0:12:13.48,0:12:16.27,Default,NTP,0,0,0,,{\a9}Đang ở đây
Dialogue: 0,0:12:21.65,0:12:22.61,Default,NTP,0,0,0,,Ừm...
Dialogue: 0,0:12:23.37,0:12:25.58,OnTop,NTP,0,0,0,,Đi thẳng
Dialogue: 0,0:12:24.07,0:12:25.58,Default,NTP,0,0,0,,Đi thẳng lên à?
Dialogue: 0,0:12:26.03,0:12:29.08,Default,NTP,0,0,0,,Chỉ phải đi thẳng lên trước, thích thật đấy!
Dialogue: 0,0:12:31.12,0:12:34.00,Default,NTP,0,0,0,,Giờ thì đi đổi ga ở phế nang phổi nào.
Dialogue: 0,0:12:36.63,0:12:37.46,Default,NTP,0,0,0,,{\i1}Phổi{\i0}
Dialogue: 0,0:12:37.46,0:12:40.72,Default,NTP,0,0,0,,{\i1}Cơ quan thải Co2 và nhận vào Oxi.{\i0}
Dialogue: 0,0:12:41.01,0:12:42.01,Default,NTP,0,0,0,,{\i1}Ồ!{\i0}
Dialogue: 0,0:12:42.26,0:12:45.72,Default,NTP,0,0,0,,{\i1}Phế nang phổi nhìn từ xa là như vậy à!{\i0}
Dialogue: 0,0:12:53.02,0:12:56.36,Default,NTP,0,0,0,,{\i1}Rất hân hạnh được chào mừng\N các bạn tới phế nang phổi.{\i0}
Dialogue: 0,0:12:56.36,0:13:00.32,Default,NTP,0,0,0,,{\a6}Khí ga áp suất cao\NXin hãy cẩn thận
Dialogue: 0,0:12:57.02,0:12:59.19,Default,NTP,0,0,0,,{\i1}Chúng tôi tiếp nhận Co2 ở đây.{\i0}
Dialogue: 0,0:13:00.32,0:13:02.70,OnTop,NTP,0,0,0,,Trà thư giãn
Dialogue: 0,0:13:05.28,0:13:11.91,Default,NTP,0,0,0,,{\a6}Khí Oxi
Dialogue: 0,0:13:17.71,0:13:18.80,Default,NTP,0,0,0,,{\i1}Đã để mọi người phải đợi{\i0}
Dialogue: 0,0:13:19.05,0:13:20.84,Default,NTP,0,0,0,,{\i1}Xin hãy nhận lấy Oxi{\i0}
Dialogue: 0,0:13:20.84,0:13:23.63,DefaultC,NTP,0,0,0,,Đang ở đây
Dialogue: 0,0:13:24.38,0:13:25.97,Default,NTP,0,0,0,,Nói mới nhớ...
Dialogue: 0,0:13:27.97,0:13:29.39,Default,NTP,0,0,0,,{\i1}Đầu tiên thì{\i0}
Dialogue: 0,0:13:29.39,0:13:31.60,Default,NTP,0,0,0,,{\i1}phải kiếm gì đó bỏ vào bụng mới được!{\i0}
Dialogue: 0,0:13:31.60,0:13:35.73,Default,NTP,0,0,0,,{\i1}Không ngờ ngươi lại trốn vào\N gói hàng của Hồng Cầu!{\i0}
Dialogue: 0,0:13:36.27,0:13:40.11,Default,NTP,0,0,0,,Đây là nơi mà Bạch Cầu-san \Nđã cứu mình lần đầu tiên.
Dialogue: 0,0:13:42.07,0:13:46.28,Default,NTP,0,0,0,,{\a6}Tĩnh mạch phổi
Dialogue: 0,0:13:43.57,0:13:44.78,Default,NTP,0,0,0,,{\i1}Tĩnh mạch phổi{\i0}
Dialogue: 0,0:13:45.07,0:13:48.03,Default,NTP,0,0,0,,{\i1}Nơi có nhiều máu giàu Oxi.{\i0}
Dialogue: 0,0:13:48.03,0:13:49.99,Default,NTP,0,0,0,,{\a11}Đang ở đây
Dialogue: 0,0:13:50.87,0:13:53.20,Default,NTP,0,0,0,,Được rồi, quay về tim thôi!
Dialogue: 0,0:13:53.54,0:13:56.17,Default,NTP,0,0,0,,{\a6}Cửa vào tĩnh mạch phổi
Dialogue: 0,0:14:07.47,0:14:08.80,Default,NTP,0,0,0,,Phải đi nhanh thôi!
Dialogue: 0,0:14:10.10,0:14:12.02,Default,NTP,0,0,0,,Nhanh quá!
Dialogue: 0,0:14:12.02,0:14:13.98,Default,NTP,0,0,0,,{\a7}Đang ở đây
Dialogue: 0,0:14:14.68,0:14:15.85,Default,NTP,0,0,0,,{\i1}Đại động mạch.{\i0}
Dialogue: 0,0:14:16.10,0:14:19.36,Default,NTP,0,0,0,,{\i1}Từ đại động mạch đường đi sẽ chia làm 2 động mạch{\i0}
Dialogue: 0,0:14:19.69,0:14:22.32,Default,NTP,0,0,0,,{\i1}và chảy tới toàn bộ mao mạch.{\i0}
Dialogue: 0,0:14:38.63,0:14:39.63,Default,NTP,0,0,0,,{\i1}Mao mạch{\i0}
Dialogue: 0,0:14:40.17,0:14:42.46,Default,NTP,0,0,0,,{\i1}Phân phối Oxi và dinh dưỡng tới tế bào{\i0}
Dialogue: 0,0:14:42.71,0:14:45.51,Default,NTP,0,0,0,,{\i1}và tiếp nhận chất thải như Co2.{\i0}
Dialogue: 0,0:14:48.72,0:14:51.93,Default,NTP,0,0,0,,Giờ chỉ còn phải chuyển gói Oxi này nữa thôi!
Dialogue: 0,0:14:54.77,0:14:55.89,Default,NTP,0,0,0,,Anh ơi
Dialogue: 0,0:14:55.89,0:15:08.86,Default,NTP,0,0,0,,{\an8}Tuyến đường vòng
Dialogue: 0,0:14:56.52,0:14:58.14,Default,NTP,0,0,0,,bên nào là bên phải ạ?
Dialogue: 0,0:14:58.40,0:15:00.98,Default,NTP,0,0,0,,Là tay em cầm bút ấy, bên này này!
Dialogue: 0,0:15:00.98,0:15:03.57,Default,NTP,0,0,0,,Anh ơi em không treo được!
Dialogue: 0,0:15:03.82,0:15:05.74,Default,NTP,0,0,0,,Rồi, để anh giúp!
Dialogue: 0,0:15:04.36,0:15:08.86,Default,NTP,0,0,0,,{\a3\pos(1818,354)}Đang xây dựng
Dialogue: 0,0:15:05.74,0:15:08.86,Default,NTP,0,0,0,,Nói "Chết đi lũ vi khuẩn" đi anh
Dialogue: 0,0:15:14.04,0:15:16.79,Default,NTP,0,0,0,,Nghe bảo có vết xước gần đây.
Dialogue: 0,0:15:16.79,0:15:17.75,Default,NTP,0,0,0,,Lại nữa à!
Dialogue: 0,0:15:18.00,0:15:19.33,Default,NTP,0,0,0,,Hừm...
Dialogue: 0,0:15:20.79,0:15:22.79,Default,NTP,0,0,0,,Phía trước cấm đường rồi à?
Dialogue: 0,0:15:31.55,0:15:33.93,Default,NTP,0,0,0,,Có vẻ chúng ta đã xâm nhập thành công rồi nhỉ.
Dialogue: 0,0:15:34.18,0:15:38.06,Default,NTP,0,0,0,,Ờ, đúng lúc có một đứa khù khờ sắp đến.
Dialogue: 0,0:15:42.15,0:15:45.82,Default,NTP,0,0,0,,Con mồi của ta là con bé Hồng\N Cầu ngu ngơ đó phải không?
Dialogue: 0,0:15:48.24,0:15:51.91,Default,NTP,0,0,0,,Hãy đợi ở góc trong này rồi xồ ra bắt nó đi!
Dialogue: 0,0:16:01.37,0:16:02.42,Default,NTP,0,0,0,,Chết đi!
Dialogue: 0,0:16:09.22,0:16:11.93,Default,NTP,0,0,0,,Ừm...tốt lắm, tốt lắm!
Dialogue: 0,0:16:12.93,0:16:14.39,Default,NTP,0,0,0,,{\i1}Nguy hiểm quá!{\i0}
Dialogue: 0,0:16:15.51,0:16:17.97,Default,NTP,0,0,0,,A, đã xử xong luôn rồi à?
Dialogue: 0,0:16:18.60,0:16:19.81,Default,NTP,0,0,0,,Còn lại nhờ cậu nhé!
Dialogue: 0,0:16:22.35,0:16:24.06,Default,NTP,0,0,0,,Đi đâu thế, đợi đã!
Dialogue: 0,0:16:24.56,0:16:25.90,Default,NTP,0,0,0,,{\a5}Xin lỗi vì sự bất tiện
Dialogue: 0,0:16:26.02,0:16:27.94,Default,NTP,0,0,0,,Xin lỗi vì sự bất tiện
Dialogue: 0,0:16:32.28,0:16:34.45,Default,NTP,0,0,0,,{\i1}Đến tận cùng bằng chính sức của mình!{\i0}
Dialogue: 0,0:16:37.95,0:16:43.92,Default,NTP,0,0,0,,{\a7}Xin lỗi vì sự bất tiện
Dialogue: 0,0:16:38.70,0:16:42.00,Default,NTP,0,0,0,,Hẹp thế này, chật quá, khổ quá!
Dialogue: 0,0:16:42.25,0:16:43.92,Default,NTP,0,0,0,,Nhưng chỉ còn một chút nữa thôi...
Dialogue: 0,0:16:49.13,0:16:52.30,Default,NTP,0,0,0,,Tôi chuyển Oxi đến ạ!
Dialogue: 0,0:16:52.55,0:16:56.26,Default,NTP,0,0,0,,A, cảm ơn, để cô phải đi qua chỗ hẹp thế này...
Dialogue: 0,0:16:56.81,0:16:58.22,Default,NTP,0,0,0,,Vất vả lắm nhỉ?
Dialogue: 0,0:16:58.68,0:17:01.18,Default,NTP,0,0,0,,À không, công việc của tôi ấy mà!
Dialogue: 0,0:17:06.06,0:17:07.48,Default,NTP,0,0,0,,Hẹp thật đó!
Dialogue: 0,0:17:09.90,0:17:12.78,Default,NTP,0,0,0,,Được rồi, cuồi cùng thì mình, mình...
Dialogue: 0,0:17:13.61,0:17:16.91,Default,NTP,0,0,0,,Mình đã tuần hoàn mà không bị lạc!
Dialogue: 0,0:17:19.29,0:17:23.42,Default,NTP,0,0,0,,Được rồi, được rồi, yay, yay!
Dialogue: 0,0:17:24.12,0:17:25.38,Default,NTP,0,0,0,,Giỏi quá!
Dialogue: 0,0:17:25.63,0:17:26.38,Default,NTP,0,0,0,,Mình làm được rồi!
Dialogue: 0,0:17:26.54,0:17:28.34,Default,NTP,0,0,0,,Mình đã làm được!
Dialogue: 0,0:17:28.80,0:17:29.55,Default,NTP,0,0,0,,Yo!
Dialogue: 0,0:17:30.09,0:17:32.51,Default,NTP,0,0,0,,T độc, sao lại ở đây?
Dialogue: 0,0:17:32.76,0:17:34.80,Default,NTP,0,0,0,,Quan trọng gì đâu.
Dialogue: 0,0:17:35.51,0:17:37.64,Default,NTP,0,0,0,,{\a6}Wooo! Yay!
Dialogue: 0,0:17:35.84,0:17:37.18,Default,NTP,0,0,0,,Quan trọng hơn, cô bé đó...
Dialogue: 0,0:17:37.64,0:17:40.93,Default,NTP,0,0,0,,có phải là Hồng Cầu cậu đã\N dẫn đường hôm nọ không?
Dialogue: 0,0:17:41.18,0:17:45.06,Default,NTP,0,0,0,,Ơ kìa, em tự mình tuần hoàn đến đây đấy à?
Dialogue: 0,0:17:45.06,0:17:48.02,Default,NTP,0,0,0,,Vâng, nhờ sự chỉ bảo của chị đấy ạ!
Dialogue: 0,0:17:48.27,0:17:51.61,Default,NTP,0,0,0,,Cuối cùng cũng tự mình làm việc được rồi à?
Dialogue: 0,0:17:51.90,0:17:53.82,Default,NTP,0,0,0,,Tầm thường, vô dụng quá nhỉ?
Dialogue: 0,0:17:54.07,0:17:56.49,Default,NTP,0,0,0,,Này, đừng nói như vậy!
Dialogue: 0,0:17:57.16,0:18:00.79,Default,NTP,0,0,0,,Cả anh và tôi cũng đều có những nhược điểm riêng.
Dialogue: 0,0:18:01.24,0:18:05.50,Default,NTP,0,0,0,,Chỉ là chẳng may cô ấy lại\N dính vào bệnh "mù đường"
Dialogue: 0,0:18:07.46,0:18:12.26,Default,NTP,0,0,0,,Dù vậy nhưng cô ấy vẫn luôn cố gắng vượt qua.
Dialogue: 0,0:18:12.59,0:18:14.34,Default,NTP,0,0,0,,Dù phải có ai đó hướng dẫn,
Dialogue: 0,0:18:14.59,0:18:17.89,Default,NTP,0,0,0,,dù cứ suốt ngày làm rối tinh\N lên, cũng không hề bỏ cuộc.
Dialogue: 0,0:18:18.47,0:18:21.97,Default,NTP,0,0,0,,Đừng có nịnh bợ, hướng dẫn cái gì chứ?
Dialogue: 0,0:18:22.22,0:18:24.73,Default,NTP,0,0,0,,Đương nhiên là phải làm được như vậy rồi!
Dialogue: 0,0:18:27.02,0:18:29.06,Default,NTP,0,0,0,,Trước giờ tôi chưa từng nghĩ đến,
Dialogue: 0,0:18:29.31,0:18:32.48,Default,NTP,0,0,0,,nhưng mà vất vả thật đó, công việc của Hồng Cầu ấy.
Dialogue: 0,0:18:33.19,0:18:36.11,Default,NTP,0,0,0,,Vận chuyển những gói hàng nặng\N nề trong cái cơ thể rộng lớn này.
Dialogue: 0,0:18:37.66,0:18:39.66,Default,NTP,0,0,0,,Vừa làm những công việc hàng ngày đó,
Dialogue: 0,0:18:39.91,0:18:42.33,Default,NTP,0,0,0,,mà vẫn cố bỏ công sức để thay đổi bản thân.
Dialogue: 0,0:18:43.12,0:18:46.33,Default,NTP,0,0,0,,Mà cũng mừng cho em, tiến \Nbộ được một tí tẹo rồi đó!
Dialogue: 0,0:18:43.41,0:18:46.33,Default,NTP,0,0,0,,{\a6}Đúng là một cô gái đáng nể.
Dialogue: 0,0:18:47.04,0:18:49.29,Default,NTP,0,0,0,,Cảm ơn ạ!
Dialogue: 0,0:18:49.63,0:18:50.92,Default,NTP,0,0,0,,Này, T độc,
Dialogue: 0,0:18:51.63,0:18:56.17,Default,NTP,0,0,0,,tế bào miễn dịch chúng ta nhiều\N khi cũng làm Hồng Cầu sợ hãi,
Dialogue: 0,0:18:56.42,0:18:59.22,Default,NTP,0,0,0,,nhưng mong rằng chúng ta có thể\N hiểu được công việc của nhau,
Dialogue: 0,0:18:59.22,0:19:03.47,Default,NTP,0,0,0,,và ngày nào đó có thể thân thiết\N hơn với bọn họ thì thật tốt.
Dialogue: 0,0:19:03.93,0:19:05.18,Default,NTP,0,0,0,,Anh cũng thấy vậy phải không?
Dialogue: 0,0:19:05.18,0:19:07.10,Default,NTP,0,0,0,,Thằng ngốc này!
Dialogue: 0,0:19:08.27,0:19:09.35,Default,NTP,0,0,0,,Chết tiệt!
Dialogue: 0,0:19:09.35,0:19:09.98,Default,NTP,0,0,0,,Chết tiệt!
Dialogue: 0,0:19:18.91,0:19:23.45,Default,NTP,0,0,0,,Đừng có nói mấy câu ngọt ngào \Nkiểu đấy, cái tên yếu đuối này!
Dialogue: 0,0:19:23.70,0:19:26.04,Default,NTP,0,0,0,,Cứ lẳng lặng mà tiến lên thôi!
Dialogue: 0,0:19:27.04,0:19:28.16,Default,NTP,0,0,0,,C-cái gì?
Dialogue: 0,0:19:29.46,0:19:33.63,Default,NTP,0,0,0,,Nghe này, nếu cần thiết thì cả đồng\N đội chúng ta cũng phải giết!
Dialogue: 0,0:19:33.88,0:19:36.97,Default,NTP,0,0,0,,Đó mới là tế bào miễn dịch phải không?
Dialogue: 0,0:19:37.38,0:19:38.88,Default,NTP,0,0,0,,Muốn thân thiết với mọi người sao?
Dialogue: 0,0:19:39.13,0:19:42.76,Default,NTP,0,0,0,,Muốn thân thiết hơn với bọn Hồng\N Cầu suốt ngày ngồi uống trà sao?
Dialogue: 0,0:19:43.35,0:19:47.31,Default,NTP,0,0,0,,Muốn ngồi chơi vài ván bài với\N mấy tên tế bào xung quanh sao?
Dialogue: 0,0:19:47.31,0:19:51.27,Default,NTP,0,0,0,,Muốn ngồi trêu nhau "Lêu lêu bốc phải joker" khi chơi bài à?
Dialogue: 0,0:19:51.27,0:19:55.15,Default,NTP,0,0,0,,Đừng có nghĩ đến những thứ đáng xấu hổ như vậy!
Dialogue: 0,0:19:55.48,0:19:58.36,Default,NTP,0,0,0,,Tôi có nghĩ chi tiết đến như vậy đâu.
Dialogue: 0,0:19:58.36,0:20:01.32,Default,NTP,0,0,0,,Chúng ta là sát thủ có phải không?
Dialogue: 0,0:20:04.16,0:20:04.87,Default,NTP,0,0,0,,Ừm.
Dialogue: 0,0:20:05.37,0:20:08.87,Default,NTP,0,0,0,,Luôn phải mài dũa để luôn sẵn sàng!
Dialogue: 0,0:20:08.87,0:20:10.87,Default,NTP,0,0,0,,Con dao trong trái tim cậu!
Dialogue: 0,0:20:11.83,0:20:12.67,Default,NTP,0,0,0,,Trái tim?
Dialogue: 0,0:20:13.13,0:20:14.63,Default,NTP,0,0,0,,Trả lời thế nào?
Dialogue: 0,0:20:14.63,0:20:15.38,Default,NTP,0,0,0,,À...
Dialogue: 0,0:20:15.63,0:20:16.30,Default,NTP,0,0,0,,Ừ.
Dialogue: 0,0:20:16.50,0:20:18.97,Default,NTP,0,0,0,,Thật là, đùng để người khác lo\N cho mấy chuyện như thế chứ!
Dialogue: 0,0:20:28.27,0:20:31.52,Default,NTP,0,0,0,,A, Bạch Cầu-san, nghe này, nghe này!
Dialogue: 0,0:20:31.77,0:20:35.02,Default,NTP,0,0,0,,Tôi ấy, lần này đã làm xong việc rồi đấy!
Dialogue: 0,0:20:36.36,0:20:38.19,Default,NTP,0,0,0,,Anh bị sao thế?
Dialogue: 0,0:20:38.19,0:20:39.74,Default,NTP,0,0,0,,À, không có gì đâu?
Dialogue: 0,0:20:39.99,0:20:42.07,Default,NTP,0,0,0,,T độc, à không có tên cướp...
Dialogue: 0,0:20:42.32,0:20:43.99,Default,NTP,0,0,0,,À không, vi khuẩn ấy mà...
Dialogue: 0,0:20:44.95,0:20:46.70,Default,NTP,0,0,0,,Cũng không đau nữa đâu.
Dialogue: 0,0:20:47.16,0:20:48.54,Default,NTP,0,0,0,,Cứ kệ nó đi!
Dialogue: 0,0:20:48.79,0:20:51.08,Default,NTP,0,0,0,,À mà, cô nói đã làm được việc rồi sao?
Dialogue: 0,0:20:51.33,0:20:52.75,Default,NTP,0,0,0,,Vâng!
Dialogue: 0,0:20:53.42,0:20:55.21,Default,NTP,0,0,0,,Kể cho tôi nghe có được không?
Dialogue: 0,0:20:55.92,0:20:57.71,Default,NTP,0,0,0,,Về công việc của các cô...
Dialogue: 0,0:21:02.97,0:21:04.39,Default,NTP,0,0,0,,À, anh biết đấy...
Dialogue: 0,0:21:04.39,0:21:08.77,Default,NTP,0,0,0,,Vừa nãy, sau khi gặp anh tôi đã tới đại tĩnh mạch!
Dialogue: 0,0:21:09.02,0:21:12.60,Default,NTP,0,0,0,,Tất cả tĩnh mạch đều nối tới đó nên là lớn lắm ý!
Dialogue: 0,0:21:12.60,0:21:13.52,Default,NTP,0,0,0,,Ừm.
Dialogue: 0,0:21:13.52,0:21:15.44,Default,NTP,0,0,0,,Sau đó tôi tới tim!
Dialogue: 0,0:21:15.44,0:21:17.61,Default,NTP,0,0,0,,Tôi bị ép bẹp dí, vất vả lắm!
Dialogue: 0,0:21:17.61,0:21:19.03,Default,NTP,0,0,0,,Bẹp dí luôn ý!
Dialogue: 0,0:21:19.03,0:21:19.98,Default,NTP,0,0,0,,Rồi, rồi.
Dialogue: 0,0:21:19.98,0:21:23.82,Default,NTP,0,0,0,,Đúng rồi, lúc ở tim ấy, tôi làm rơi giấy nhớ,
Dialogue: 0,0:21:23.82,0:21:26.16,Default,NTP,0,0,0,,nhưng mà tự nhiên thế nào nó \Nlại bay trở lại từ đằng sau!
Dialogue: 0,0:21:26.16,0:21:26.87,Default,NTP,0,0,0,,Rồi.
Dialogue: 0,0:21:26.87,0:21:29.54,Default,NTP,0,0,0,,Sau đấy tôi đến phổi rồi phế nang phổi!
Dialogue: 0,0:21:29.54,0:21:33.16,Default,NTP,0,0,0,,Nhìn từ bên ngoài nó mềm mềm trông hay lắm!
Dialogue: 0,0:21:33.16,0:21:35.46,Default,NTP,0,0,0,,Thế à nghe hay nhỉ, mềm mềm á...
Dialogue: 0,0:21:35.46,0:21:36.71,Default,NTP,0,0,0,,Sau đấy...
Dialogue: 0,0:21:40.30,0:21:42.88,Default,NTP,0,0,0,,Tôi mới làm nhẹ đi này, giờ nhẹ cực kì luôn ấy!
Dialogue: 0,0:21:42.88,0:21:44.09,Default,NTP,0,0,0,,Thế à, cho tôi xem nào!
Dialogue: 0,0:21:44.09,0:21:46.09,Default,NTP,0,0,0,,Tôi đang đi thì bị lạc!
Dialogue: 0,0:21:46.26,0:21:47.76,Default,NTP,0,0,0,,Lêu lêu!
Dialogue: 0,0:21:49.31,0:21:50.06,Default,NTP,0,0,0,,Chết tiệt.
Dialogue: 0,0:21:51.68,0:21:53.39,Default,NTP,0,0,0,,Không phải là ghen tỵ...
Dialogue: 0,0:21:53.81,0:21:54.98,Default,NTP,0,0,0,,đâu!
Dialogue: 0,0:23:26.49,0:23:28.57,Default,NTP,0,0,0,,Mài dũa đi! Con dao của trái tim!
Dialogue: 0,0:23:28.78,0:23:30.53,Default,NTP,0,0,0,,Làm thế nào vậy?
Dialogue: 0,0:23:30.53,0:23:31.95,Default,NTP,0,0,0,,Tự mình suy nghĩ đi!
Dialogue: 0,0:23:32.58,0:23:35.79,Default,NTP,0,0,0,,Tập tiếp theo: "Tế bào tuyến ngực"
Dialogue: 0,0:23:35.79,0:23:36.79,Default,NTP,0,0,0,,Nào!
Dialogue: 0,0:23:36.79,0:23:38.29,Default,NTP,0,0,0,,Làm việc nào, làm việc nào!
Dialogue: 0,0:23:36.79,0:23:40.00,Default,NTP,0,0,0,,{\an8}Tập 9:\NTế bào tuyến ngực
