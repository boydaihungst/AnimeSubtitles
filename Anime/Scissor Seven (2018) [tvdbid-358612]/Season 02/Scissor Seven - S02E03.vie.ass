Dialogue: 0,0:00:07.71,0:00:10.00,Default,,0,0,0,,LOẠT PHIM HOẠT HÌNH CỦA NETFLIX
Dialogue: 0,0:00:22.54,0:00:24.79,Default,,0,0,0,,NHIỆM VỤ 3: BẢO VỆ CUỒNG SỦA
Dialogue: 0,0:00:25.17,0:00:27.38,Default,,0,0,0,,THẤT
Dialogue: 0,0:00:27.46,0:00:28.38,Default,,0,0,0,,LẠN MỆNH HOA
Dialogue: 0,0:00:28.46,0:00:31.00,Default,,0,0,0,,Tiên sinh, tóc của ngài xong rồi.
Dialogue: 0,0:00:31.13,0:00:33.67,Default,,0,0,0,,{\an8}Gội, cắt, sấy 15 tệ.\NCộng thêm ba đĩa thịt bò xào trứng,
Dialogue: 0,0:00:33.75,0:00:35.79,Default,,0,0,0,,{\an8}một phần phá lấu bò,\Nvà một cốc trà sữa lạnh,
Dialogue: 0,0:00:35.88,0:00:37.34,Default,,0,0,0,,{\an8}tổng cộng 88 tệ.
Dialogue: 0,0:00:37.42,0:00:39.42,Default,,0,0,0,,{\an8}HÓA ĐƠN: 88 TỆ
Dialogue: 0,0:00:41.71,0:00:43.96,Default,,0,0,0,,{\an8}Tôi hết tiền rồi. Cho ăn chịu nhé.
Dialogue: 0,0:00:44.04,0:00:45.92,Default,,0,0,0,,{\an8}Cái gì, muốn ăn xong chạy à?
Dialogue: 0,0:00:46.00,0:00:47.21,Default,,0,0,0,,{\an8}Thất, lên.
Dialogue: 0,0:00:47.29,0:00:49.92,Default,,0,0,0,,Định gây sự với ta à? Ngươi chết chắc rồi.
Dialogue: 0,0:00:50.00,0:00:51.38,Default,,0,0,0,,Chờ đã.
Dialogue: 0,0:00:51.46,0:00:54.92,Default,,0,0,0,,Tôi có mấy quyển võ lâm bí tịch\Ntừ Huyền Vũ đây.
Dialogue: 0,0:00:55.00,0:00:57.88,Default,,0,0,0,,Anh chọn một quyển đi, coi như hết nợ nhé.
Dialogue: 0,0:00:57.96,0:01:00.54,Default,,0,0,0,,Đừng có tin. Nhìn là biết hàng giả rồi.
Dialogue: 0,0:01:01.83,0:01:02.87,Default,,0,0,0,,Tôi chọn quyển này.
Dialogue: 0,0:01:03.58,0:01:05.46,Default,,0,0,0,,{\i1}BÁCH KHOA TOÀN THƯ TẠO MẪU TÓC{\i0}
Dialogue: 0,0:01:06.71,0:01:08.25,Default,,0,0,0,,Nhìn bảnh quá.
Dialogue: 0,0:01:13.67,0:01:15.38,Default,,0,0,0,,TỔNG HÀNH DINH CỦA CHÓ
Dialogue: 0,0:01:15.46,0:01:17.25,Default,,0,0,0,,XÂM NHẬP GIẾT KHÔNG THA
Dialogue: 0,0:01:20.25,0:01:23.08,Default,,0,0,0,,{\i1}LƯỢC SỬ LOÀI NGƯỜI{\i0}
Dialogue: 0,0:01:58.71,0:01:59.63,Default,,0,0,0,,ĐẦN SỦA
Dialogue: 0,0:02:08.96,0:02:11.79,Default,,0,0,0,,Dừng tay. Không được ngược đãi chó.
Dialogue: 0,0:02:21.17,0:02:23.50,Default,,0,0,0,,Cuồng Sủa, ta tới đánh bại ngươi.
Dialogue: 0,0:02:24.17,0:02:25.30,Default,,0,0,0,,Tới đi.
Dialogue: 0,0:03:09.00,0:03:10.33,Default,,0,0,0,,Cuồng ca.
Dialogue: 0,0:03:11.13,0:03:12.30,Default,,0,0,0,,Cuồng ca.
Dialogue: 0,0:03:12.50,0:03:13.67,Default,,0,0,0,,Tiểu Mễ.
Dialogue: 0,0:03:14.04,0:03:15.71,Default,,0,0,0,,- Cuồng ca.\N- Tiểu Mễ.
Dialogue: 0,0:03:15.79,0:03:17.08,Default,,0,0,0,,- Cuồng...\N- Đủ rồi.
Dialogue: 0,0:03:17.17,0:03:19.38,Default,,0,0,0,,Đừng nhai lại mấy câu sướt mướt nữa.
Dialogue: 0,0:03:19.79,0:03:21.12,Default,,0,0,0,,Nói chuyện chính trước.
Dialogue: 0,0:03:21.42,0:03:22.84,Default,,0,0,0,,Bắt đầu thanh toán viện phí đi.
Dialogue: 0,0:03:22.92,0:03:25.05,Default,,0,0,0,,Hắn không phải chó bình thường.
Dialogue: 0,0:03:25.83,0:03:28.04,Default,,0,0,0,,{\i1}Hắn là một con chó chơi guitar.{\i0}
Dialogue: 0,0:03:28.79,0:03:30.92,Default,,0,0,0,,Ta dùng guitar để quyết đấu đi.
Dialogue: 0,0:03:49.46,0:03:54.09,Default,,0,0,0,,{\i1}Nàng lại chia tay với hắn lần nữa{\i0}
Dialogue: 0,0:03:54.17,0:03:55.96,Default,,0,0,0,,{\i1}Giọng hắn không hề tầm thường.{\i0}
Dialogue: 0,0:03:56.04,0:04:00.33,Default,,0,0,0,,{\i1}Tôi luôn bên cạnh nàng chờ đợi{\i0}
Dialogue: 0,0:04:01.08,0:04:03.33,Default,,0,0,0,,{\i1}Tán gẫu với nàng{\i0}
Dialogue: 0,0:04:03.42,0:04:04.59,Default,,0,0,0,,{\i1}Hắn hát không hay.{\i0}
Dialogue: 0,0:04:04.67,0:04:07.05,Default,,0,0,0,,{\i1}- Cùng khóc với nàng\N- Nhưng không hiểu sao...{\i0}
Dialogue: 0,0:04:07.75,0:04:12.63,Default,,0,0,0,,{\i1}- Muốn ở cạnh nàng 350 ngày\N- ...ta thấy rất đau khổ, không sức lực{\i0}
Dialogue: 0,0:04:14.33,0:04:16.87,Default,,0,0,0,,{\i1}- như nhân vật trong đoạn phim buồn.\N- Giờ hắn lại tới{\i0}
Dialogue: 0,0:04:16.96,0:04:21.50,Default,,0,0,0,,{\i1}- Nắm lấy tay nàng\N- Đột nhiên tim ta đau nhói.{\i0}
Dialogue: 0,0:04:21.67,0:04:25.88,Default,,0,0,0,,{\i1}- Nàng đứng bên cạnh hắn\N- Đau như cảm giác bị thất tình.{\i0}
Dialogue: 0,0:04:25.96,0:04:29.92,Default,,0,0,0,,{\i1}- Những nốt nhạc tan vỡ trái tim.\N- Không cất nên lời{\i0}
Dialogue: 0,0:04:30.21,0:04:33.04,Default,,0,0,0,,{\i1}Tôi là gì chứ?{\i0}
Dialogue: 0,0:04:33.33,0:04:35.16,Default,,0,0,0,,{\i1}Tôi ngu ngốc vậy sao...{\i0}
Dialogue: 0,0:04:35.25,0:04:38.71,Default,,0,0,0,,Sau đó tôi chạy tới,\Ntên sát thủ đã đi rồi.
Dialogue: 0,0:04:39.67,0:04:43.17,Default,,0,0,0,,Đó chính là bài hát đã thất truyền,\N"Bi Tình Ma Âm".
Dialogue: 0,0:04:43.25,0:04:45.50,Default,,0,0,0,,- "Bi Tình Ma Âm?"\N- "Bi Tình Ma Âm?"
Dialogue: 0,0:04:46.50,0:04:48.75,Default,,0,0,0,,Ông vừa nói đó là tên bài hát à?
Dialogue: 0,0:04:48.83,0:04:50.04,Default,,0,0,0,,Tôi biết cách rồi.
Dialogue: 0,0:04:50.17,0:04:52.55,Default,,0,0,0,,"Dụ chó ra khỏi hang".
Dialogue: 0,0:04:52.63,0:04:54.01,Default,,0,0,0,,Không phải "Dụ rắn" à?
Dialogue: 0,0:05:01.29,0:05:04.29,Default,,0,0,0,,Sân to như vậy, một mình anh ấy
Dialogue: 0,0:05:04.38,0:05:06.30,Default,,0,0,0,,giả vờ uống rượu vang.
Dialogue: 0,0:05:06.38,0:05:07.96,Default,,0,0,0,,Không phải giả tạo lắm sao?
Dialogue: 0,0:05:08.13,0:05:09.09,Default,,0,0,0,,Giả à?
Dialogue: 0,0:05:09.25,0:05:10.29,Default,,0,0,0,,Không giả à?
Dialogue: 0,0:05:10.38,0:05:11.34,Default,,0,0,0,,Giả à?
Dialogue: 0,0:05:11.42,0:05:12.25,Default,,0,0,0,,Không giả à?
Dialogue: 0,0:05:12.33,0:05:14.29,Default,,0,0,0,,Chó thông minh thế à?
Dialogue: 0,0:05:14.67,0:05:15.59,Default,,0,0,0,,Được rồi.
Dialogue: 0,0:05:25.13,0:05:26.05,Default,,0,0,0,,Tới rồi.
Dialogue: 0,0:05:26.13,0:05:27.42,Default,,0,0,0,,Đã bảo mà?
Dialogue: 0,0:05:27.54,0:05:29.71,Default,,0,0,0,,Kế hoạch của tôi là hoàn hảo.
Dialogue: 0,0:05:34.71,0:05:36.71,Default,,0,0,0,,TRÓI BUỘC MA ÂM
Dialogue: 0,0:05:39.13,0:05:41.46,Default,,0,0,0,,Tưởng ta sẽ mắc lừa à?
Dialogue: 0,0:05:41.54,0:05:43.17,Default,,0,0,0,,Ngươi không phải là Cuồng Sủa.
Dialogue: 0,0:05:43.25,0:05:45.63,Default,,0,0,0,,Mắt ngươi bị thâm nặng.
Dialogue: 0,0:05:47.04,0:05:48.75,Default,,0,0,0,,Sao lại thế?
Dialogue: 0,0:05:50.88,0:05:53.13,Default,,0,0,0,,Đoán được thì khán giả còn cần xem phim à?
Dialogue: 0,0:05:53.79,0:05:54.79,Default,,0,0,0,,Chai Bay!
Dialogue: 0,0:05:59.50,0:06:02.42,Default,,0,0,0,,Mô Phỏng Kim Kiên Thất Nhật Tỏa.
Dialogue: 0,0:06:02.50,0:06:04.17,Default,,0,0,0,,{\i1}Bị khóa rồi.{\i0}
Dialogue: 0,0:06:08.25,0:06:10.92,Default,,0,0,0,,Ngươi là ai, vì sao muốn sát hại Cuồng ca?
Dialogue: 0,0:06:15.67,0:06:21.80,Default,,0,0,0,,{\i1}- Tôi ngu ngốc vậy sao bảo vệ được nàng?{\i0}\N- Cẩn thận, là bài hát đó.
Dialogue: 0,0:06:23.42,0:06:26.63,Default,,0,0,0,,{\i1}Đến người dự bị cũng không phải tôi{\i0}
Dialogue: 0,0:06:26.71,0:06:29.79,Default,,0,0,0,,{\i1}Lại bao dung cho sự kiêu ngạo của nàng{\i0}
Dialogue: 0,0:06:29.88,0:06:34.55,Default,,0,0,0,,{\i1}Giờ tôi lẳng lặng khóc\NMà không nghĩ đến nàng{\i0}
Dialogue: 0,0:06:34.96,0:06:37.63,Default,,0,0,0,,{\i1}Không muốn gặp lại nàng{\i0}
Dialogue: 0,0:06:37.71,0:06:41.25,Default,,0,0,0,,{\i1}Lần này tôi thật sự từ bỏ{\i0}
Dialogue: 0,0:06:41.33,0:06:46.33,Default,,0,0,0,,{\i1}Tôi phải làm sao để vờ như\NChưa từng yêu nàng{\i0}
Dialogue: 0,0:06:48.92,0:06:52.21,Default,,0,0,0,,{\i1}Đến người dự bị cũng không phải tôi{\i0}
Dialogue: 0,0:06:52.29,0:06:54.92,Default,,0,0,0,,{\i1}Không muốn làm cái bóng của tình yêu{\i0}
Dialogue: 0,0:07:02.17,0:07:05.09,Default,,0,0,0,,Ta là sát thủ không cảm xúc.
Dialogue: 0,0:07:12.33,0:07:14.58,Default,,0,0,0,,THẤT
Dialogue: 0,0:07:17.00,0:07:18.58,Default,,0,0,0,,Muốn ta cắt tóc cho ngươi không?
Dialogue: 0,0:07:18.67,0:07:21.92,Default,,0,0,0,,{\i1}Bi Tình Ma Âm một khi dừng lại\Nsẽ mất đi công dụng.{\i0}
Dialogue: 0,0:07:23.75,0:07:28.42,Default,,0,0,0,,{\i1}Giờ hắn lại tới nắm lấy tay nàng{\i0}
Dialogue: 0,0:07:29.25,0:07:31.08,Default,,0,0,0,,Biến thân!
Dialogue: 0,0:07:40.58,0:07:43.29,Default,,0,0,0,,Tai Nghe Gà!
Dialogue: 0,0:07:50.88,0:07:53.76,Default,,0,0,0,,Tai Nghe Gà Bay!
Dialogue: 0,0:08:01.75,0:08:04.67,Default,,0,0,0,,{\i1}Hắn sở trường tấn công tầm xa.\NPhải ép hắn cận chiến.{\i0}
Dialogue: 0,0:08:04.75,0:08:07.38,Default,,0,0,0,,Tiểu Phi, dùng tốc độ nhanh nhất\Ntiếp cận hắn.
Dialogue: 0,0:08:09.42,0:08:11.05,Default,,0,0,0,,Gà Phóng Đạn!
Dialogue: 0,0:08:28.38,0:08:30.05,Default,,0,0,0,,{\i1}Cận chiến hoàn toàn bị áp chế.{\i0}
Dialogue: 0,0:08:34.71,0:08:35.79,Default,,0,0,0,,Tiểu Phi.
Dialogue: 0,0:09:16.71,0:09:18.50,Default,,0,0,0,,Không sợ ta giết chết sao?
Dialogue: 0,0:09:18.79,0:09:20.37,Default,,0,0,0,,Không được đâu, Miêu Tài.
Dialogue: 0,0:09:22.42,0:09:23.34,Default,,0,0,0,,Mặt nạ của ta.
Dialogue: 0,0:09:27.46,0:09:28.88,Default,,0,0,0,,Quả nhiên.
Dialogue: 0,0:09:30.13,0:09:34.38,Default,,0,0,0,,{\i1}Lúc ta đưa chân lên mũi ngươi,\Nthế mà ngươi không phản ứng gì.{\i0}
Dialogue: 0,0:09:35.00,0:09:39.04,Default,,0,0,0,,Chó có khứu giác rất nhạy bén\Nkhông thể chịu đựng như vậy.
Dialogue: 0,0:09:39.67,0:09:40.80,Default,,0,0,0,,Bởi vì,
Dialogue: 0,0:09:40.88,0:09:43.13,Default,,0,0,0,,chân này cả ngày chưa rửa.
Dialogue: 0,0:09:45.13,0:09:47.67,Default,,0,0,0,,Cho nên chân tướng chỉ có một.
Dialogue: 0,0:09:48.29,0:09:50.17,Default,,0,0,0,,Cái mũi chó là giả.
Dialogue: 0,0:09:51.00,0:09:53.67,Default,,0,0,0,,{\i1}Đó chỉ là khẩu trang y tế.{\i0}
Dialogue: 0,0:09:58.67,0:10:00.30,Default,,0,0,0,,MIÊU TÀI\NNHỊ THỦ LĨNH MÈO
Dialogue: 0,0:10:00.38,0:10:02.42,Default,,0,0,0,,Tiểu Mễ, ta xin lỗi.
Dialogue: 0,0:10:03.21,0:10:04.92,Default,,0,0,0,,Ta làm vậy là vì...
Dialogue: 0,0:10:05.96,0:10:08.17,Default,,0,0,0,,Có vẻ lại là một câu chuyện sến sẩm nữa.
Dialogue: 0,0:10:08.75,0:10:11.13,Default,,0,0,0,,Miêu Tài, nửa năm qua huynh đi đâu vậy?
Dialogue: 0,0:10:11.21,0:10:13.59,Default,,0,0,0,,- Mọi người đều lo lắng.\N- Ta thích muội.
Dialogue: 0,0:10:15.67,0:10:17.67,Default,,0,0,0,,Ta thích muội rất lâu rồi.
Dialogue: 0,0:10:19.46,0:10:20.84,Default,,0,0,0,,Bắt đầu rồi đây.
Dialogue: 0,0:10:20.92,0:10:23.84,Default,,0,0,0,,{\i1}Nhưng trong lòng muội chỉ có con chó đó.{\i0}
Dialogue: 0,0:10:23.92,0:10:28.75,Default,,0,0,0,,{\i1}Nửa năm trước, ta rời Kê Đảo\Ntới một nơi gọi là Dali.{\i0}
Dialogue: 0,0:10:28.83,0:10:29.71,Default,,0,0,0,,{\i1}CẨM NANG DU LỊCH DALI{\i0}
Dialogue: 0,0:10:29.79,0:10:31.92,Default,,0,0,0,,{\i1}Nghe nói có rất nhiều mỹ nữ,{\i0}
Dialogue: 0,0:10:32.13,0:10:34.13,Default,,0,0,0,,{\i1}nên muốn dùng nó để quên muội.{\i0}
Dialogue: 0,0:10:34.67,0:10:36.42,Default,,0,0,0,,{\i1}Kết quả là khi phiêu bạt khắp nơi,{\i0}
Dialogue: 0,0:10:37.17,0:10:39.50,Default,,0,0,0,,{\i1}ta tới nơi gọi là Huyền Vũ.{\i0}
Dialogue: 0,0:10:39.58,0:10:41.33,Default,,0,0,0,,HUYỀN VŨ
Dialogue: 0,0:10:41.42,0:10:44.92,Default,,0,0,0,,{\i1}Vì đã ăn hết cá,\Nta phải hát rong kiếm sống.{\i0}
Dialogue: 0,0:10:45.75,0:10:49.58,Default,,0,0,0,,{\i1}Mấy kẻ xấu đánh đập ta,\Nnói ta hát rất khó nghe.{\i0}
Dialogue: 0,0:10:49.92,0:10:52.46,Default,,0,0,0,,{\i1}Đúng lúc đó, ân nhân xuất hiện.{\i0}
Dialogue: 0,0:10:52.54,0:10:55.17,Default,,0,0,0,,{\i1}Người ta gọi ông là Cửu Chỉ Cầm Ma.{\i0}
Dialogue: 0,0:10:56.25,0:10:59.63,Default,,0,0,0,,{\i1}Chẳng những cứu ta, mà còn\Ntruyền thụ cho ta tuyệt thế thần công,{\i0}
Dialogue: 0,0:10:59.79,0:11:01.50,Default,,0,0,0,,{\i1}Bi Tình Ma Âm.{\i0}
Dialogue: 0,0:11:01.58,0:11:05.33,Default,,0,0,0,,Lời ca của ngươi lan tỏa\Nsự cô đơn nhiều năm.
Dialogue: 0,0:11:05.83,0:11:08.08,Default,,0,0,0,,Rất thích hợp để luyện Bi Tình Ma Âm.
Dialogue: 0,0:11:08.79,0:11:10.87,Default,,0,0,0,,Tôi có thích một người.
Dialogue: 0,0:11:10.96,0:11:12.63,Default,,0,0,0,,Nhưng cô ấy không thích ngươi.
Dialogue: 0,0:11:14.54,0:11:17.75,Default,,0,0,0,,{\i1}Nhờ có thiên phú dị bẩm,\Nnửa năm ta đã học xong.{\i0}
Dialogue: 0,0:11:18.38,0:11:21.84,Default,,0,0,0,,{\i1}Ta cảm thấy khi trở về,\Nphải là nam tử đỉnh thiên lập địa.{\i0}
Dialogue: 0,0:11:22.42,0:11:27.00,Default,,0,0,0,,{\i1}Khi sắp thổ lộ với Tiểu Mễ,\Ncon chó cặn bã đó lại xuất hiện.{\i0}
Dialogue: 0,0:11:30.92,0:11:36.67,Default,,0,0,0,,{\i1}Em dấu yêu, xin tha thứ cho anh{\i0}
Dialogue: 0,0:11:37.42,0:11:44.13,Default,,0,0,0,,{\i1}Anh đúng là chú chó ngu đần{\i0}
Dialogue: 0,0:11:44.21,0:11:46.67,Default,,0,0,0,,{\i1}Hắn hát hay quá.{\i0}
Dialogue: 0,0:11:50.46,0:11:53.04,Default,,0,0,0,,Huynh nghĩ ta thích chó chơi guitar,
