Dialogue: 0,0:00:24.63,0:00:27.51,Default,,0,0,0,,LOẠT PHIM HOẠT HÌNH CỦA NETFLIX
Dialogue: 0,0:00:28.04,0:00:33.50,Default,,0,0,0,,NHIỆM VỤ 9: KÝ ỨC CẬU KHÔNG MUỐN QUÊN\NDÙ CHỈ TOÀN ĐAU ĐỚN
Dialogue: 0,0:01:16.04,0:01:16.92,Default,,0,0,0,,ĐƠN ĐAO
Dialogue: 0,0:01:47.00,0:01:48.08,Default,,0,0,0,,SÁT ĐẦU VÕ THẮNG
Dialogue: 0,0:01:56.96,0:01:58.00,Default,,0,0,0,,ƯNG TIỄN
Dialogue: 0,0:02:11.25,0:02:12.21,Default,,0,0,0,,{\an8}LÝ HOA
Dialogue: 0,0:02:49.92,0:02:50.80,Default,,0,0,0,,DẠ
Dialogue: 0,0:02:52.79,0:02:53.75,Default,,0,0,0,,{\an8}DẠ HÀNH QUỶ
Dialogue: 0,0:04:34.79,0:04:36.87,Default,,0,0,0,,TIỆM TÓC ĐẠI BẢO
Dialogue: 0,0:04:48.33,0:04:49.46,Default,,0,0,0,,ĐỀN NGỖNG ĐỀN ĐÁP
Dialogue: 0,0:05:04.63,0:05:07.05,Default,,0,0,0,,- Thất!\N- Anh Thất!
Dialogue: 0,0:05:07.13,0:05:09.80,Default,,0,0,0,,Thất, thôi nào.
Dialogue: 0,0:05:15.71,0:05:16.71,Default,,0,0,0,,Dậy ngay đi.
Dialogue: 0,0:05:16.79,0:05:19.17,Default,,0,0,0,,Chính cậu bảo đưa Tiểu Phi ra biển chơi.
Dialogue: 0,0:05:19.25,0:05:20.71,Default,,0,0,0,,Sao giờ lại ngủ?
Dialogue: 0,0:05:20.79,0:05:25.29,Default,,0,0,0,,Anh Thất, qua chơi với bọn em.\NCó trận đấu súng nước này.
Dialogue: 0,0:05:27.38,0:05:29.51,Default,,0,0,0,,{\i1}Vừa rồi là ác mộng à?{\i0}
Dialogue: 0,0:05:35.42,0:05:36.75,Default,,0,0,0,,Lại đây!
Dialogue: 0,0:05:40.83,0:05:41.75,Default,,0,0,0,,Được.
Dialogue: 0,0:05:44.96,0:05:46.38,Default,,0,0,0,,Chơi nào.
Dialogue: 0,0:06:20.50,0:06:21.79,Default,,0,0,0,,Thất, chụp lấy!
Dialogue: 0,0:08:24.00,0:08:26.63,Default,,0,0,0,,{\i1}Giờ mọi sát thủ đang săn lùng Thất.{\i0}
Dialogue: 0,0:08:27.79,0:08:29.54,Default,,0,0,0,,{\i1}Sớm muộn gì anh ấy cũng bị giết.{\i0}
Dialogue: 0,0:08:31.25,0:08:34.67,Default,,0,0,0,,{\i1}Nếu sư phụ\Nmuốn giết anh ấy thì đã làm rồi.{\i0}
Dialogue: 0,0:08:35.17,0:08:39.42,Default,,0,0,0,,{\i1}Sao phải phiền phức\Ndùng Hắc huyền Băng đao đâm anh ấy chứ?{\i0}
Dialogue: 0,0:08:41.83,0:08:44.71,Default,,0,0,0,,Nói này. Ta hâm mộ ngươi lắm.
Dialogue: 0,0:08:44.79,0:08:48.58,Default,,0,0,0,,Ta nghe đi nghe lại chuyện của ngươi mãi.
Dialogue: 0,0:08:49.25,0:08:52.00,Default,,0,0,0,,Tuổi 15, ngươi trở thành\Nmột trong Thất đại Sát thủ.
Dialogue: 0,0:08:52.08,0:08:56.00,Default,,0,0,0,,Tuổi 16, ngươi đã đoạt\NMa đao Ngàn lưỡi từ tay Thiên Ma.
Dialogue: 0,0:08:56.71,0:09:00.29,Default,,0,0,0,,Tuổi 17, ngươi một mình\Nám sát Quốc vương nước Stan.
Dialogue: 0,0:09:00.88,0:09:04.67,Default,,0,0,0,,Ta có thể kể nguyên ngày.
Dialogue: 0,0:09:05.42,0:09:08.46,Default,,0,0,0,,Hai năm trước, chúng ta đã gặp nhau.
Dialogue: 0,0:09:09.88,0:09:13.46,Default,,0,0,0,,{\i1}Hai năm trước,\Nngươi cũng rơi vào cảnh như thế này.{\i0}
Dialogue: 0,0:09:13.54,0:09:15.42,Default,,0,0,0,,{\i1}Đám sát thủ đang săn lùng ngươi.{\i0}
Dialogue: 0,0:09:16.17,0:09:19.25,Default,,0,0,0,,{\i1}Ta đã cầm kiếm đứng trước mặt ngươi.{\i0}
Dialogue: 0,0:09:20.63,0:09:22.76,Default,,0,0,0,,{\i1}Mà ngươi chẳng thèm nhìn một cái.{\i0}
Dialogue: 0,0:09:23.42,0:09:25.55,Default,,0,0,0,,Ta đã sợ đến nỗi chẳng thể cử động.
Dialogue: 0,0:09:26.21,0:09:30.42,Default,,0,0,0,,Ta đã thề khi gặp lại ngươi,
Dialogue: 0,0:09:30.50,0:09:33.46,Default,,0,0,0,,ta sẽ không hèn nhát thế nữa.
Dialogue: 0,0:09:34.88,0:09:38.51,Default,,0,0,0,,Tối nay, hãy chiến đấu đi.
Dialogue: 0,0:10:02.50,0:10:03.67,Default,,0,0,0,,Mai Hoa cô nương.
Dialogue: 0,0:10:04.83,0:10:06.79,Default,,0,0,0,,Vào một đêm tối giông gió thế này,
Dialogue: 0,0:10:07.54,0:10:09.46,Default,,0,0,0,,cô và tôi lại ở chung một phòng.
Dialogue: 0,0:10:09.54,0:10:11.25,Default,,0,0,0,,Có thể nguy hiểm cho cô đấy.
Dialogue: 0,0:10:12.21,0:10:15.96,Default,,0,0,0,,Nguy hiểm cho anh thì có,\Nvì anh còn lải nhải là tôi giết đấy.
Dialogue: 0,0:10:22.88,0:10:26.05,Default,,0,0,0,,- Cởi áo ra đi.\N- Gì? Hôm nay tôi gặp may à?
Dialogue: 0,0:10:42.75,0:10:45.71,Default,,0,0,0,,Tôi cảm thấy như có gì đó\Nnuốt chửng tôi từ bên trong.
Dialogue: 0,0:10:56.38,0:10:57.88,Default,,0,0,0,,PHÁ LẤU BÒ
Dialogue: 0,0:10:58.96,0:11:01.46,Default,,0,0,0,,{\i1}Những khoảnh khắc\Nvà con người trong ký ức tôi...{\i0}
Dialogue: 0,0:11:01.54,0:11:03.71,Default,,0,0,0,,{\i1}đang dần tan biến.{\i0}
Dialogue: 0,0:11:04.38,0:11:08.05,Default,,0,0,0,,{\i1}Cảm giác như đó không phải ký ức của tôi.{\i0}
Dialogue: 0,0:11:09.04,0:11:13.29,Default,,0,0,0,,{\i1}Tôi còn chẳng nhớ nổi\Nkhuôn mặt của vài người.{\i0}
Dialogue: 0,0:11:22.58,0:11:25.08,Default,,0,0,0,,Đừng kháng cự nó. Như thế sẽ dễ chịu hơn.
Dialogue: 0,0:11:28.04,0:11:29.29,Default,,0,0,0,,Tôi không thể.
Dialogue: 0,0:11:31.58,0:11:35.08,Default,,0,0,0,,Tôi không muốn quên mọi người ở trên đảo.
Dialogue: 0,0:11:38.79,0:11:40.71,Default,,0,0,0,,Nếu những ký ức đó làm anh đau đớn,
Dialogue: 0,0:11:41.75,0:11:43.96,Default,,0,0,0,,có lẽ anh nên quên hết chúng đi.
Dialogue: 0,0:11:44.75,0:11:48.58,Default,,0,0,0,,Người ta vẫn có thể sống\Nmà không cần ký ức.
Dialogue: 0,0:11:52.50,0:11:53.63,Default,,0,0,0,,Phải.
Dialogue: 0,0:11:55.58,0:11:57.04,Default,,0,0,0,,Tuy nhiên,
Dialogue: 0,0:11:57.13,0:12:02.21,Default,,0,0,0,,có những ký ức đau đớn, nhưng đáng nhớ.
Dialogue: 0,0:12:03.17,0:12:08.96,Default,,0,0,0,,Vài ký ức dường như rất đơn giản,\Nnhưng sao vẫn rất ấm lòng.
Dialogue: 0,0:12:09.83,0:12:11.75,Default,,0,0,0,,Tôi mong có thể được về Kê Đảo.
Dialogue: 0,0:12:12.38,0:12:14.84,Default,,0,0,0,,Được xem cô mặc bộ đồ tôi tặng
Dialogue: 0,0:12:15.75,0:12:17.21,Default,,0,0,0,,rồi ra bãi biển...
Dialogue: 0,0:12:25.71,0:12:27.79,Default,,0,0,0,,Mọi đau đớn anh đang chịu
Dialogue: 0,0:12:27.88,0:12:30.67,Default,,0,0,0,,là do Hắc huyền Băng đao\Nmà tôi dùng để đâm anh.
Dialogue: 0,0:12:31.17,0:12:34.00,Default,,0,0,0,,Nói chuyện với tôi đi,\Ngiúp tôi đừng nghĩ đến nó. Nhé?
Dialogue: 0,0:12:35.00,0:12:37.33,Default,,0,0,0,,Được. Anh muốn nói về chuyện gì?
Dialogue: 0,0:12:38.88,0:12:41.92,Default,,0,0,0,,Sao cô lại tên "Thập Tam" vậy?\NTên gì lạ quá.
Dialogue: 0,0:12:42.58,0:12:44.37,Default,,0,0,0,,Tôi cũng có thể hỏi anh câu y chang.
Dialogue: 0,0:12:46.00,0:12:47.92,Default,,0,0,0,,Đấy đâu phải câu trả lời.
Dialogue: 0,0:12:49.42,0:12:53.09,Default,,0,0,0,,Vậy... sao anh lại nỗ lực\Nbảo vệ người trên đảo đến thế?
Dialogue: 0,0:12:55.83,0:12:58.71,Default,,0,0,0,,Mọi ký ức đẹp của tôi đều là ở Kê Đảo.
Dialogue: 0,0:12:59.50,0:13:02.17,Default,,0,0,0,,Đại Bảo và Tiểu Phi như gia đình của tôi.
Dialogue: 0,0:13:04.00,0:13:09.08,Default,,0,0,0,,Tôi thích mọi điều ở nơi đó.\NVậy nên tôi muốn bảo vệ họ.
Dialogue: 0,0:13:12.83,0:13:13.96,Default,,0,0,0,,Còn cô thì sao?
Dialogue: 0,0:13:14.96,0:13:16.63,Default,,0,0,0,,Cô muốn bảo vệ ai?
Dialogue: 0,0:13:23.75,0:13:25.96,Default,,0,0,0,,Người duy nhất\Ntôi muốn bảo vệ đã chết rồi.
Dialogue: 0,0:13:31.04,0:13:32.71,Default,,0,0,0,,Nhưng cô vừa cứu tôi mà.
Dialogue: 0,0:13:32.79,0:13:35.46,Default,,0,0,0,,Thế có nghĩa giờ cô chỉ muốn bảo vệ tôi?
Dialogue: 0,0:13:37.92,0:13:41.00,Default,,0,0,0,,Tôi... chỉ làm theo lệnh sư phụ thôi.
Dialogue: 0,0:13:42.71,0:13:44.92,Default,,0,0,0,,Giờ mọi sát thủ đang lùng giết anh.
Dialogue: 0,0:13:45.46,0:13:49.92,Default,,0,0,0,,Trong số chúng có người còn mạnh hơn tôi.\NTôi không thể bảo vệ anh trước chúng.
Dialogue: 0,0:13:59.58,0:14:01.91,Default,,0,0,0,,Tôi biết một người có thể cứu mạng anh.
Dialogue: 0,0:14:04.75,0:14:07.54,Default,,0,0,0,,Nhưng tôi thật sự\Nkhông muốn xin ông ấy giúp đỡ.
Dialogue: 0,0:14:40.88,0:14:44.17,Default,,0,0,0,,Cậu là người đầu tiên\Ncự lại được Hắc huyền Băng đao...
Dialogue: 0,0:14:44.79,0:14:46.08,Default,,0,0,0,,lâu đến thế.
Dialogue: 0,0:16:14.00,0:16:15.92,Default,,0,0,0,,{\i1}Khi tôi mở mắt lại{\i0}
Dialogue: 0,0:16:16.00,0:16:19.88,Default,,0,0,0,,{\i1}Thì nhận ra\NTôi đã ở trong một thế giới mới{\i0}
Dialogue: 0,0:16:19.96,0:16:22.17,Default,,0,0,0,,{\i1}Tôi trăn trở{\i0}
Dialogue: 0,0:16:22.25,0:16:26.63,Default,,0,0,0,,{\i1}Cố nhớ lại quá khứ{\i0}
Dialogue: 0,0:16:26.71,0:16:28.96,Default,,0,0,0,,{\i1}Chàng và nàng{\i0}
Dialogue: 0,0:16:30.54,0:16:35.83,Default,,0,0,0,,{\i1}Đã gặp nhau nơi sâu thẳm trái tim tôi{\i0}
Dialogue: 0,0:16:38.13,0:16:42.51,Default,,0,0,0,,{\i1}Tôi biết được rằng trái tim tôi{\i0}
Dialogue: 0,0:16:42.58,0:16:46.29,Default,,0,0,0,,{\i1}Bấy lâu nay đầy đam mê{\i0}
Dialogue: 0,0:16:46.38,0:16:52.17,Default,,0,0,0,,{\i1}Tôi đã cố bảo vệ hiện tại{\i0}
Dialogue: 0,0:16:52.83,0:16:54.37,Default,,0,0,0,,{\i1}Đứng chắn cho hòn đảo{\i0}
Dialogue: 0,0:16:55.04,0:17:00.25,Default,,0,0,0,,{\i1}Một mình đương đầu\NMang lấy mọi gánh nặng{\i0}
Dialogue: 0,0:17:03.38,0:17:06.63,Default,,0,0,0,,{\i1}Cơn bão dữ dội{\i0}
Dialogue: 0,0:17:06.71,0:17:10.88,Default,,0,0,0,,{\i1}Che đi nụ cười cay đắng trên mặt tôi{\i0}
Dialogue: 0,0:17:15.21,0:17:18.17,Default,,0,0,0,,{\i1}Đột nhiên tôi nhận ra{\i0}
Dialogue: 0,0:17:18.79,0:17:24.46,Default,,0,0,0,,{\i1}Nước mắt tôi đã chảy{\i0}
Dialogue: 0,0:17:25.79,0:17:31.58,Default,,0,0,0,,{\i1}Tôi đang trên bờ vực diệt vong\NVào ngày tận thế{\i0}
Dialogue: 0,0:17:31.67,0:17:37.92,Default,,0,0,0,,{\i1}Lưỡi kiếm trên tay tôi\NTừ lâu đã tan thành ngàn mảnh{\i0}
Dialogue: 0,0:17:38.96,0:17:42.25,Default,,0,0,0,,{\i1}Trước khi biến thành tro bụi{\i0}
Dialogue: 0,0:17:42.33,0:17:47.12,Default,,0,0,0,,{\i1}Tôi vẫn muốn bảo vệ thế giới{\i0}
Dialogue: 0,0:17:49.83,0:17:55.66,Default,,0,0,0,,{\i1}Tôi sợ phải ghép lại những mảnh ký ức{\i0}
Dialogue: 0,0:17:55.75,0:18:01.96,Default,,0,0,0,,{\i1}Chỉ để biết rằng\NMùa hè ấy không bao giờ trở lại{\i0}
Dialogue: 0,0:18:02.04,0:18:05.87,Default,,0,0,0,,{\i1}Ký ức về thế giới có bạn{\i0}
Dialogue: 0,0:18:05.96,0:18:10.75,Default,,0,0,0,,{\an8}{\i1}Là ký ức mà...{\i0}
Dialogue: 0,0:18:14.13,0:18:16.76,Default,,0,0,0,,{\i1}Tôi muốn giữ vẹn nguyên{\i0}
Dialogue: 0,0:18:58.21,0:19:02.25,Default,,0,0,0,,Trời, sao trông anh tả tơi thế,
Dialogue: 0,0:19:02.83,0:19:04.62,Default,,0,0,0,,anh yêu?
Dialogue: 0,0:19:05.29,0:19:07.62,Default,,0,0,0,,{\i1}Tôi biết được rằng trái tim tôi{\i0}
Dialogue: 0,0:19:07.71,0:19:13.59,Default,,0,0,0,,{\i1}Bấy lâu nay đầy đam mê{\i0}
Dialogue: 0,0:19:13.67,0:19:19.30,Default,,0,0,0,,{\i1}Tôi đã cố bảo vệ hiện tại{\i0}
Dialogue: 0,0:19:20.71,0:19:25.71,Default,,0,0,0,,Biên dịch: John Thai Hoa
