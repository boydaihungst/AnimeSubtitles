Dialogue: 0,0:01:46.85,0:01:49.44,Default,,0,0,0,,{\i1}Người ta nghĩ{\i0}\N{\i1}cà chua ngon nhất vào mùa hè,{\i0}
Dialogue: 0,0:01:50.10,0:01:52.90,Default,,0,0,0,,{\i1}nhưng thật ra, ăn cà chua{\i0}\N{\i1}vào đầu mùa đông ngon hơn.{\i0}
Dialogue: 0,0:01:58.03,0:01:58.99,Default,,0,0,0,,Xin lỗi nhé.
Dialogue: 0,0:01:59.74,0:02:00.78,Default,,0,0,0,,Gì thế?
Dialogue: 0,0:02:00.87,0:02:02.87,Default,,0,0,0,,Tớ xin lỗi, có lẽ cần thêm chút nữa.
Dialogue: 0,0:02:02.95,0:02:04.20,Default,,0,0,0,,Bọn tớ đợi được mà.
Dialogue: 0,0:02:04.29,0:02:05.37,Default,,0,0,0,,Đừng lo.
Dialogue: 0,0:02:07.29,0:02:08.62,Default,,0,0,0,,{\i1}Tôi thích nấu ăn.{\i0}
Dialogue: 0,0:02:10.04,0:02:13.21,Default,,0,0,0,,{\i1}Thỉnh thoảng,{\i0}\N{\i1}tôi nấu cho các bạn cùng phòng.{\i0}
Dialogue: 0,0:02:13.96,0:02:17.26,Default,,0,0,0,,{\i1}Khi nấu ăn, tôi thấy được bình tâm.{\i0}
Dialogue: 0,0:02:17.76,0:02:22.68,Default,,0,0,0,,ĐẦU BẾP HỒI HỘP
Dialogue: 0,0:02:24.14,0:02:25.64,Default,,0,0,0,,Đồ ăn đây rồi.
Dialogue: 0,0:02:27.06,0:02:28.73,Default,,0,0,0,,Ăn thôi nào.
Dialogue: 0,0:02:30.65,0:02:33.23,Default,,0,0,0,,Đồ Riz nấu ngon thật đấy.
Dialogue: 0,0:02:34.11,0:02:37.57,Default,,0,0,0,,Nhưng lúc nào cũng mặn.
Dialogue: 0,0:02:38.40,0:02:40.03,Default,,0,0,0,,Ôi, không. Tớ lại thế nữa rồi.
Dialogue: 0,0:02:41.24,0:02:42.49,Default,,0,0,0,,Tớ sẽ cẩn thận.
Dialogue: 0,0:02:43.87,0:02:45.16,Default,,0,0,0,,{\i1}Sao lại thế nhỉ?{\i0}
Dialogue: 0,0:02:45.83,0:02:49.62,Default,,0,0,0,,{\i1}Kể từ đêm đó, mình đã mất vị giác.{\i0}
Dialogue: 0,0:02:50.75,0:02:53.92,Default,,0,0,0,,{\i1}Mình đã ăn Tem, lạc đà không bướu,{\i0}\N{\i1}khi cậu ấy cho phép…{\i0}
Dialogue: 0,0:02:55.17,0:02:58.76,Default,,0,0,0,,{\i1}và mình là chú gấu duy nhất{\i0}\N{\i1}đã có tình bạn thật sự với thú ăn cỏ.{\i0}
Dialogue: 0,0:03:04.43,0:03:06.81,Default,,0,0,0,,{\i1}Như nguyên liệu phó mặc vào tay mình,{\i0}
Dialogue: 0,0:03:07.35,0:03:11.19,Default,,0,0,0,,{\i1}mình đã ăn tươi nuốt sống cậu ấy{\i0}\N{\i1}thật tao nhã và bình thản.{\i0}
Dialogue: 0,0:03:12.52,0:03:17.07,Default,,0,0,0,,{\i1}Ký ức của ta, hãy đẹp hơn nữa.{\i0}
Dialogue: 0,0:03:18.23,0:03:20.19,Default,,0,0,0,,{\i1}Đừng quên hương vị của Tem.{\i0}
Dialogue: 0,0:03:20.82,0:03:22.28,Default,,0,0,0,,Ta là bạn thân.
Dialogue: 0,0:03:23.03,0:03:26.87,Default,,0,0,0,,{\i1}Thế nên, những ký ức{\i0}\N{\i1}về đêm đó với Tem tái hiện thật đẹp.{\i0}
Dialogue: 0,0:03:27.41,0:03:30.12,Default,,0,0,0,,Tớ sẽ đón nhận con người cậu, Riz.
Dialogue: 0,0:03:39.34,0:03:41.55,Default,,0,0,0,,{\i1}Những bữa ăn là vui thú cuộc đời.{\i0}
Dialogue: 0,0:03:42.47,0:03:47.14,Default,,0,0,0,,{\i1}Tem, cậu đã mỉm cười{\i0}\N{\i1}khi tớ đưa cậu vào miệng.{\i0}
Dialogue: 0,0:03:49.60,0:03:53.19,Default,,0,0,0,,{\i1}Chính cậu đã ăn thịt Tem ngày hôm ấy?{\i0}
Dialogue: 0,0:03:53.85,0:03:58.36,Default,,0,0,0,,{\i1}Miễn còn sống, tớ sẽ tiếp tục{\i0}\N{\i1}ngăn chặn chuyện ăn tươi nuốt sống.{\i0}
Dialogue: 0,0:03:58.44,0:04:01.03,Default,,0,0,0,,{\i1}Tớ sẽ nghiền nát cậu vì Tem.{\i0}
Dialogue: 0,0:04:03.45,0:04:06.16,Default,,0,0,0,,{\i1}Họ sẽ vạch trần nó.{\i0}
Dialogue: 0,0:04:06.78,0:04:12.00,Default,,0,0,0,,{\i1}Họ sẽ hủy hoại tình bạn của Tem và mình,{\i0}\N{\i1}hủy hoại tuổi học sinh của mình.{\i0}
Dialogue: 0,0:04:13.16,0:04:14.54,Default,,0,0,0,,{\i1}Mình phải trừ khử họ.{\i0}
Dialogue: 0,0:04:15.21,0:04:17.92,Default,,0,0,0,,{\i1}Con cừu bẩn bựa và con sói biến thái.{\i0}
Dialogue: 0,0:04:21.09,0:04:22.76,Default,,0,0,0,,{\i1}Mình bị gì thế này?{\i0}
Dialogue: 0,0:04:23.88,0:04:25.34,Default,,0,0,0,,{\i1}Mình đã gặp Rouis…{\i0}
Dialogue: 0,0:04:26.01,0:04:29.22,Default,,0,0,0,,{\i1}và mình cần nghĩ cách đối phó với Riz.{\i0}
Dialogue: 0,0:04:29.89,0:04:33.98,Default,,0,0,0,,{\i1}Tối qua, mình có giấc mơ bậy bạ về Hal.{\i0}
Dialogue: 0,0:04:34.81,0:04:36.56,Default,,0,0,0,,{\i1}Xét cho cùng, mình đầy dục vọng.{\i0}
Dialogue: 0,0:04:37.77,0:04:39.52,Default,,0,0,0,,{\i1}Hơn nữa, đây không phải lần đầu.{\i0}
Dialogue: 0,0:04:39.61,0:04:41.99,Default,,0,0,0,,{\i1}Có vẻ cảnh trong mơ ngày càng nhiều.{\i0}
Dialogue: 0,0:04:42.90,0:04:44.40,Default,,0,0,0,,{\i1}Và lại rất sống động.{\i0}
Dialogue: 0,0:04:45.24,0:04:48.03,Default,,0,0,0,,{\i1}Mình đầy dục vọng.{\i0}
Dialogue: 0,0:04:48.87,0:04:52.54,Default,,0,0,0,,{\i1}Tại sao? Phần nào{\i0}\N{\i1}trong đầu mình nảy sinh ra nó nhỉ?{\i0}
Dialogue: 0,0:04:53.20,0:04:57.83,Default,,0,0,0,,{\i1}Một phần mềm mại{\i0}\N{\i1}chẳng có ở đâu nơi cơ thể mình…{\i0}
Dialogue: 0,0:04:58.33,0:04:59.29,Default,,0,0,0,,{\i1}Này.{\i0}
Dialogue: 0,0:04:59.38,0:05:00.30,Default,,0,0,0,,Gì thế?
Dialogue: 0,0:05:00.88,0:05:02.17,Default,,0,0,0,,Tay cậu bẩn bựa quá.
Dialogue: 0,0:05:03.21,0:05:04.09,Default,,0,0,0,,Cậu có thật!
Dialogue: 0,0:05:05.09,0:05:06.47,Default,,0,0,0,,Thật?
Dialogue: 0,0:05:06.55,0:05:09.18,Default,,0,0,0,,Tớ đâu thường thấy cậu ở đây.
Dialogue: 0,0:05:10.14,0:05:11.18,Default,,0,0,0,,Tớ vừa đến mà.
Dialogue: 0,0:05:11.26,0:05:12.68,Default,,0,0,0,,Cậu xong tiết rồi à?
Dialogue: 0,0:05:13.35,0:05:16.60,Default,,0,0,0,,Tớ muốn thấy mặt cậu\Nvà nói chuyện cho đàng hoàng.
Dialogue: 0,0:05:17.10,0:05:18.40,Default,,0,0,0,,Sau tiết này, cậu rảnh chứ?
Dialogue: 0,0:05:19.06,0:05:22.07,Default,,0,0,0,,Rảnh. Ta đi chỗ khác nhé?
Dialogue: 0,0:05:25.99,0:05:27.28,Default,,0,0,0,,Cầm tay tớ này.
Dialogue: 0,0:05:27.36,0:05:28.57,Default,,0,0,0,,Cảm ơn nhé.
Dialogue: 0,0:05:30.62,0:05:34.58,Default,,0,0,0,,{\i1}Chẳng biết cậu ấy{\i0}\N{\i1}có lập lời thề gì với bản thân không.{\i0}
Dialogue: 0,0:05:35.20,0:05:36.58,Default,,0,0,0,,{\i1}Cậu ấy tử tế quá.{\i0}
Dialogue: 0,0:05:36.66,0:05:39.17,Default,,0,0,0,,Hal, cậu học vui chứ?
Dialogue: 0,0:05:39.75,0:05:41.84,Default,,0,0,0,,Cũng tàm tạm. Như lâu nay thôi.
Dialogue: 0,0:05:42.34,0:05:46.80,Default,,0,0,0,,{\i1}Cậu ấy nhỏ tuổi hơn mình, nhưng đôi khi,{\i0}\N{\i1}cứ như ông bố vậy. Hài thật.{\i0}
Dialogue: 0,0:05:48.63,0:05:51.10,Default,,0,0,0,,{\i1}Rouis thì ngược lại, như con nít ấy.{\i0}
Dialogue: 0,0:05:52.43,0:05:54.72,Default,,0,0,0,,{\i1}Anh ấy bất an nhưng ngoan cố,{\i0}
Dialogue: 0,0:05:55.43,0:05:58.90,Default,,0,0,0,,{\i1}vô tâm mà lúc nào cũng có vẻ cô đơn.{\i0}
Dialogue: 0,0:05:59.81,0:06:01.56,Default,,0,0,0,,Hôm nay đẹp trời thật nhỉ?
Dialogue: 0,0:06:03.11,0:06:04.19,Default,,0,0,0,,Legoshi.
Dialogue: 0,0:06:05.61,0:06:06.78,Default,,0,0,0,,Tớ yêu cậu.
Dialogue: 0,0:06:07.32,0:06:08.74,Default,,0,0,0,,Tớ yêu cậu lắm.
Dialogue: 0,0:06:08.82,0:06:10.36,Default,,0,0,0,,Thật hả? Thật thế à?
Dialogue: 0,0:06:10.45,0:06:11.53,Default,,0,0,0,,Thật.
Dialogue: 0,0:06:11.62,0:06:14.29,Default,,0,0,0,,{\i1}Hình như đây là lần đầu{\i0}\N{\i1}cậu ấy mở miệng nói tiếng yêu.{\i0}
Dialogue: 0,0:06:14.37,0:06:15.54,Default,,0,0,0,,Cảm ơn cậu.
Dialogue: 0,0:06:16.12,0:06:21.42,Default,,0,0,0,,Cậu mạnh mẽ, tử tế,\Nto lớn và đáng tin cậy.
Dialogue: 0,0:06:22.71,0:06:28.88,Default,,0,0,0,,Tớ càng yêu cậu thì lại càng lo về Rouis.
Dialogue: 0,0:06:30.59,0:06:31.64,Default,,0,0,0,,Gì cơ?
Dialogue: 0,0:06:32.80,0:06:35.18,Default,,0,0,0,,Chắc tớ nói sai gì rồi.
Dialogue: 0,0:06:35.26,0:06:38.06,Default,,0,0,0,,Không. Tớ không yêu anh ấy nữa.
Dialogue: 0,0:06:38.14,0:06:39.94,Default,,0,0,0,,Legoshi, nghe tớ đi mà.
Dialogue: 0,0:06:40.52,0:06:43.73,Default,,0,0,0,,Tớ và Rouis đã hết rồi.\NBọn tớ không còn yêu đương gì.
Dialogue: 0,0:06:44.61,0:06:47.82,Default,,0,0,0,,Nhưng tớ lo cho anh ấy.
Dialogue: 0,0:06:48.74,0:06:51.61,Default,,0,0,0,,Anh ấy chẳng hề\Ntrả lời email hay nghe máy.
Dialogue: 0,0:06:55.74,0:07:00.58,Default,,0,0,0,,Thú ăn cỏ và ăn thịt phản ứng\Nkhác nhau với chuyện mất liên lạc.
Dialogue: 0,0:07:01.71,0:07:04.50,Default,,0,0,0,,Tớ không thể không nghĩ rằng\Nanh ấy đang gặp nguy hiểm.
Dialogue: 0,0:07:07.05,0:07:10.63,Default,,0,0,0,,Tớ thấy bất lực…
Dialogue: 0,0:07:10.72,0:07:15.76,Default,,0,0,0,,{\i1}Mình muốn ôm cậu ấy quá.{\i0}
Dialogue: 0,0:07:17.52,0:07:22.85,Default,,0,0,0,,{\i1}Trong giấc mơ, tớ đã ôm cậu thật chặt{\i0}
Dialogue: 0,0:07:23.44,0:07:25.11,Default,,0,0,0,,{\i1}và sờ cậu bất chấp…{\i0}
Dialogue: 0,0:07:28.11,0:07:31.07,Default,,0,0,0,,Hal, cậu nhỏ quá.
Dialogue: 0,0:07:31.15,0:07:32.78,Default,,0,0,0,,{\i1}Kích cỡ cơ thể cậu ấy…{\i0}
Dialogue: 0,0:07:32.86,0:07:33.95,Default,,0,0,0,,Ý cậu là sao?
Dialogue: 0,0:07:34.03,0:07:35.74,Default,,0,0,0,,{\i1}Nó xác định sự tồn tại của mình.{\i0}
Dialogue: 0,0:07:36.62,0:07:39.20,Default,,0,0,0,,{\i1}Kể từ ngày tấn công cậu,{\i0}
Dialogue: 0,0:07:39.83,0:07:43.75,Default,,0,0,0,,{\i1}tớ đã phải vật lộn với{\i0}\N{\i1}sự khác biệt giữa cơ thể cậu và tớ.{\i0}
Dialogue: 0,0:07:45.67,0:07:49.05,Default,,0,0,0,,Hal, tớ sẽ không làm ai phải khổ đâu.
Dialogue: 0,0:07:50.42,0:07:51.84,Default,,0,0,0,,Legoshi.
Dialogue: 0,0:07:52.97,0:07:55.05,Default,,0,0,0,,Tớ sẽ cố hết sức.
Dialogue: 0,0:07:56.68,0:07:59.39,Default,,0,0,0,,Cậu đúng là kỳ lạ.
Dialogue: 0,0:08:02.81,0:08:06.69,Default,,0,0,0,,{\i1}Tớ sẽ ôm cậu{\i0}\N{\i1}sau khi xử lý xong mọi chuyện.{\i0}
Dialogue: 0,0:08:12.82,0:08:15.74,Default,,0,0,0,,Sừng của em hôm nay thơm quá.
Dialogue: 0,0:08:16.87,0:08:20.20,Default,,0,0,0,,Em đã bôi sáp mật ong đấy.\NNên nó bóng láng hơn.
Dialogue: 0,0:08:20.29,0:08:23.96,Default,,0,0,0,,Anh hiểu rồi. Anh thích chúng lắm.
Dialogue: 0,0:08:25.46,0:08:28.88,Default,,0,0,0,,Pina, anh ở trong câu lạc bộ kịch nhỉ?\NỞ đó vui không?
Dialogue: 0,0:08:28.96,0:08:32.09,Default,,0,0,0,,Anh sẽ đóng vai chính\Ntrong vở diễn Năm Mới.
Dialogue: 0,0:08:32.59,0:08:33.93,Default,,0,0,0,,Em đến xem anh diễn chứ?
Dialogue: 0,0:08:34.43,0:08:36.72,Default,,0,0,0,,Chắc chắn rồi. Anh đóng vai gì?
Dialogue: 0,0:08:37.30,0:08:40.68,Default,,0,0,0,,Anh sẽ đóng vai một cậu bé dễ thương\Nbị Thần Chết đoạt hồn.
Dialogue: 0,0:08:41.47,0:08:43.23,Default,,0,0,0,,Cuối vở diễn, anh sẽ chết.
Dialogue: 0,0:08:43.89,0:08:45.23,Default,,0,0,0,,Thật sao?
Dialogue: 0,0:08:45.31,0:08:47.40,Default,,0,0,0,,Ừ. Anh sẽ chết.
Dialogue: 0,0:08:49.36,0:08:50.82,Default,,0,0,0,,Riona.
Dialogue: 0,0:08:51.53,0:08:55.28,Default,,0,0,0,,Nếu anh chết thật,\Nem có khóc thương anh không?
Dialogue: 0,0:08:56.53,0:08:58.95,Default,,0,0,0,,Có lẽ em sẽ cười.
Dialogue: 0,0:08:59.66,0:09:03.00,Default,,0,0,0,,Nhân tiện, Riona là ai vậy?
Dialogue: 0,0:09:05.33,0:09:09.38,Default,,0,0,0,,Anh cứ nhầm tên con gái như thế,\Nchẳng ai đến tang lễ anh đâu.
Dialogue: 0,0:09:12.30,0:09:15.55,Default,,0,0,0,,{\i1}Mình lại thế nữa rồi.{\i0}
Dialogue: 0,0:09:16.68,0:09:19.97,Default,,0,0,0,,{\i1}Đám con gái giết mình bằng lời lẽ.{\i0}
Dialogue: 0,0:09:22.22,0:09:24.14,Default,,0,0,0,,{\i1}Xốc lại mình đi nào!{\i0}
Dialogue: 0,0:09:24.23,0:09:26.19,Default,,0,0,0,,{\i1}Gần đây, mình thấy chẳng ổn lắm.{\i0}
Dialogue: 0,0:09:26.81,0:09:32.90,Default,,0,0,0,,{\i1}Nhưng cái vai phải chết ở cuối vở diễn{\i0}\N{\i1}giờ thật quá hợp với mình.{\i0}
Dialogue: 0,0:09:38.78,0:09:43.91,Default,,0,0,0,,Anh háo hức về buổi tập hôm nay quá, Pina.
Dialogue: 0,0:09:49.13,0:09:51.21,Default,,0,0,0,,Anh làm em sợ đấy.
Dialogue: 0,0:09:51.79,0:09:54.09,Default,,0,0,0,,Kẻ ăn tươi nuốt sống cũng đi vệ sinh à?
Dialogue: 0,0:09:54.17,0:09:56.84,Default,,0,0,0,,Dĩ nhiên là thế rồi.
Dialogue: 0,0:09:58.88,0:10:03.06,Default,,0,0,0,,Cậu bảo Legoshi\Nđừng kiếm chuyện với anh nữa được không?
Dialogue: 0,0:10:04.39,0:10:05.43,Default,,0,0,0,,Tại sao?
Dialogue: 0,0:10:05.98,0:10:08.48,Default,,0,0,0,,Nếu các cậu để anh yên,
Dialogue: 0,0:10:08.56,0:10:12.27,Default,,0,0,0,,anh có thể sống an bình với ký ức về Tem.
Dialogue: 0,0:10:13.44,0:10:17.28,Default,,0,0,0,,Nhưng nếu các cậu phá hoại\Ntình bạn anh đã có với Tem,
Dialogue: 0,0:10:18.07,0:10:23.24,Default,,0,0,0,,anh sẽ cho Legoshi đi đời\Nvà có khi ăn thịt cả cậu đấy.
Dialogue: 0,0:10:24.49,0:10:26.75,Default,,0,0,0,,Ăn từ tốn từ đầu cậu xuống.
Dialogue: 0,0:10:28.58,0:10:31.25,Default,,0,0,0,,Em không nghĩ anh nên làm thế đâu.
Dialogue: 0,0:10:31.33,0:10:34.80,Default,,0,0,0,,Rõ ràng, sừng của em\Nsẽ vướng víu và lại dở…
Dialogue: 0,0:10:58.19,0:11:02.99,Default,,0,0,0,,Anh không kìm nổi vì ngón tay cậu\Nthơm mùi mật ong quá. Xin lỗi nhé.
Dialogue: 0,0:11:04.08,0:11:05.16,Default,,0,0,0,,Hẹn gặp lại.
Dialogue: 0,0:11:10.29,0:11:12.71,Default,,0,0,0,,{\i1}Ngón tay mình… vẫn còn.{\i0}
Dialogue: 0,0:11:14.75,0:11:16.21,Default,,0,0,0,,{\i1}Tuyệt quá.{\i0}
Dialogue: 0,0:11:18.84,0:11:22.34,Default,,0,0,0,,{\i1}Mình thấy nhẹ nhõm khi mình{\i0}\N{\i1}chẳng phiền nằm trên sàn nhà vệ sinh.{\i0}
Dialogue: 0,0:11:23.76,0:11:27.60,Default,,0,0,0,,{\i1}Thật ra mình khao khát sống{\i0}\N{\i1}hơn mình tưởng.{\i0}
Dialogue: 0,0:11:30.60,0:11:35.36,Default,,0,0,0,,Ta là Thần Chết\Nđến để đoạt hồn ngươi tối nay.
Dialogue: 0,0:11:35.44,0:11:36.86,Default,,0,0,0,,Adler.
Dialogue: 0,0:11:36.94,0:11:42.57,Default,,0,0,0,,Nếu ngươi có di nguyện,\Nhãy nói với cái liềm này đi.
Dialogue: 0,0:11:43.41,0:11:45.62,Default,,0,0,0,,{\i1}Mình thật là dễ thương nhỉ?{\i0}
Dialogue: 0,0:11:46.37,0:11:48.04,Default,,0,0,0,,{\i1}Mình thấy khá hơn nhiều rồi.{\i0}
Dialogue: 0,0:11:57.63,0:12:02.51,Default,,0,0,0,,Ngươi và các Thần Chết khác\Ncó thỏa mãn nếu ta nài xin được sống?
Dialogue: 0,0:12:03.09,0:12:04.26,Default,,0,0,0,,Gì cơ?
Dialogue: 0,0:12:05.22,0:12:10.81,Default,,0,0,0,,Sinh mạng ta vô giá trị,\Nnhưng nó là của ta.
Dialogue: 0,0:12:10.89,0:12:13.27,Default,,0,0,0,,Hay lắm. Cậu ấy nhớ thoại rồi.
Dialogue: 0,0:12:14.90,0:12:19.23,Default,,0,0,0,,Nỗi sợ chết của ta cũng là của riêng ta.
Dialogue: 0,0:12:21.82,0:12:26.20,Default,,0,0,0,,Ta sẽ để ngươi nghe tiếng kêu gào lòng ta,\Nnhưng đừng hòng nghe di nguyện ta.
Dialogue: 0,0:12:27.62,0:12:28.74,Default,,0,0,0,,Muốn thì cứ giết ta đi!
Dialogue: 0,0:12:29.33,0:12:31.45,Default,,0,0,0,,Ta không sợ ngươi đâu!
Dialogue: 0,0:12:36.50,0:12:37.54,Default,,0,0,0,,Cậu ổn không vậy?
Dialogue: 0,0:12:37.63,0:12:39.42,Default,,0,0,0,,Đem băng gạc đến đây.
Dialogue: 0,0:12:42.59,0:12:45.09,Default,,0,0,0,,Pina… cậu bị gì thế?
Dialogue: 0,0:12:47.51,0:12:48.68,Default,,0,0,0,,Ý cậu là sao chứ?
Dialogue: 0,0:12:57.56,0:12:58.73,Default,,0,0,0,,Hiểu màn vừa rồi không?
Dialogue: 0,0:13:02.90,0:13:07.24,Default,,0,0,0,,{\i1}Mình hiểu. Có lẽ nó đã nói quá đủ rồi.{\i0}
Dialogue: 0,0:13:12.66,0:13:16.54,Default,,0,0,0,,Free, từ giờ cầm theo khẩu này đi.
Dialogue: 0,0:13:17.42,0:13:18.63,Default,,0,0,0,,Tại sao?
Dialogue: 0,0:13:18.71,0:13:20.00,Default,,0,0,0,,Để bắn tôi.
Dialogue: 0,0:13:20.75,0:13:24.63,Default,,0,0,0,,Phòng khi tôi mất kiểm soát\Nvà cố ăn thịt đại ca của ta.
Dialogue: 0,0:13:25.34,0:13:29.01,Default,,0,0,0,,Nếu cậu ấy và tôi\Nchỉ còn là con sư tử và con hươu,
Dialogue: 0,0:13:29.60,0:13:31.14,Default,,0,0,0,,đừng ngần ngại bắn tôi.
Dialogue: 0,0:13:31.76,0:13:35.48,Default,,0,0,0,,Ồ…
Dialogue: 0,0:13:37.77,0:13:40.44,Default,,0,0,0,,Đi làm gì mà căng thẳng thế này.
Dialogue: 0,0:13:40.94,0:13:43.15,Default,,0,0,0,,Ta đều quá tận tụy rồi.
Dialogue: 0,0:13:44.61,0:13:50.99,Default,,0,0,0,,Thế không có gì xấu. Ta đang\Nsống sung sướng dưới trướng đại ca này.
Dialogue: 0,0:13:55.33,0:13:56.46,Default,,0,0,0,,Có chuyện đó thật sao?
Dialogue: 0,0:13:58.75,0:14:01.92,Default,,0,0,0,,Xảy ra lúc anh bỏ câu lạc bộ\Nmà đến Chợ Đen ấy.
Dialogue: 0,0:14:02.71,0:14:06.42,Default,,0,0,0,,Anh không cần lo\Nkhi em xử lý theo cách của em.
Dialogue: 0,0:14:06.51,0:14:07.68,Default,,0,0,0,,Không được…
Dialogue: 0,0:14:08.68,0:14:10.22,Default,,0,0,0,,Anh biết cậu ta nguy hiểm lắm.
Dialogue: 0,0:14:10.30,0:14:12.97,Default,,0,0,0,,Ta phải làm gì đó\Ntrước khi ai đó bị tấn công.
Dialogue: 0,0:14:13.06,0:14:14.68,Default,,0,0,0,,Em đồng ý.
Dialogue: 0,0:14:15.27,0:14:17.23,Default,,0,0,0,,Chính vì thế em mới lập kế hoạch.
Dialogue: 0,0:14:17.81,0:14:18.98,Default,,0,0,0,,Kế hoạch sao?
Dialogue: 0,0:14:19.06,0:14:20.48,Default,,0,0,0,,Em sẽ làm con mồi.
Dialogue: 0,0:14:22.02,0:14:23.69,Default,,0,0,0,,Trông em không ngon lành à?
Dialogue: 0,0:14:24.44,0:14:27.36,Default,,0,0,0,,Em sẽ dụ anh ta. Rồi anh sẽ…
Dialogue: 0,0:14:28.15,0:14:29.15,Default,,0,0,0,,Không được.
Dialogue: 0,0:14:29.24,0:14:31.20,Default,,0,0,0,,Nguy hiểm quá. Cậu không được làm thế.
Dialogue: 0,0:14:31.74,0:14:37.33,Default,,0,0,0,,Nhưng em đã để lại lời nhắn rồi.
Dialogue: 0,0:14:37.41,0:14:38.58,Default,,0,0,0,,Gì cơ?
Dialogue: 0,0:14:40.17,0:14:41.67,Default,,0,0,0,,Sàn ký túc xá đầy lông.
Dialogue: 0,0:14:41.75,0:14:44.30,Default,,0,0,0,,Như một cái thảm ấy. Tớ ghét thế này…
Dialogue: 0,0:14:45.38,0:14:46.84,Default,,0,0,0,,Cậu đang làm gì thế?
Dialogue: 0,0:14:46.92,0:14:48.05,Default,,0,0,0,,Tưởng cậu về rồi.
Dialogue: 0,0:14:49.22,0:14:50.76,Default,,0,0,0,,Tớ quên đồ.
Dialogue: 0,0:14:50.84,0:14:52.05,Default,,0,0,0,,Đừng hoảng lên thế.
Dialogue: 0,0:14:52.14,0:14:53.60,Default,,0,0,0,,- Hẹn gặp lại.\N- Chào nhé.
Dialogue: 0,0:14:53.68,0:14:55.10,Default,,0,0,0,,Mừng Năm Mới.
Dialogue: 0,0:14:59.14,0:15:00.02,Default,,0,0,0,,PINA
Dialogue: 0,0:15:01.40,0:15:02.81,Default,,0,0,0,,{\i1}Mình lấy được rồi.{\i0}
Dialogue: 0,0:15:10.07,0:15:15.58,Default,,0,0,0,,Tao ngạc nhiên khi thằng hèn như mày\Nmượn danh Pina để dụ tao đấy.
Dialogue: 0,0:15:16.58,0:15:19.71,Default,,0,0,0,,Mày nghĩ có thể thắng tao hả, Legoshi?
Dialogue: 0,0:15:21.67,0:15:23.67,Default,,0,0,0,,Đừng nhìn tao bằng đôi mắt thú săn mồi
Dialogue: 0,0:15:23.75,0:15:25.79,Default,,0,0,0,,và gọi tên tao. Nó làm tao phát tởm.
Dialogue: 0,0:15:26.38,0:15:31.38,Default,,0,0,0,,{\i1}Đúng như mình nghĩ, con sói xám này{\i0}\N{\i1}khác với mấy thú ăn thịt khác.{\i0}
Dialogue: 0,0:15:32.43,0:15:35.05,Default,,0,0,0,,Mày hiểu tao rõ quá mà.
Dialogue: 0,0:15:36.06,0:15:40.31,Default,,0,0,0,,{\i1}Tao thích ăn thịt mày{\i0}\N{\i1}hơn là nói chuyện với mày, Legoshi à.{\i0}
Dialogue: 0,0:15:43.52,0:15:44.61,Default,,0,0,0,,{\i1}Mật ong.{\i0}
Dialogue: 0,0:15:45.61,0:15:47.15,Default,,0,0,0,,{\i1}Mình đau đầu chịu không nổi.{\i0}
Dialogue: 0,0:15:50.78,0:15:52.32,Default,,0,0,0,,Tao biết tình trạng của mày.
Dialogue: 0,0:15:52.40,0:15:53.57,Default,,0,0,0,,Trả lại đây.
Dialogue: 0,0:15:54.16,0:15:59.37,Default,,0,0,0,,Không hay đâu nhé.\NĐầu tao… đau như sắp nứt ra rồi.
Dialogue: 0,0:16:00.20,0:16:02.04,Default,,0,0,0,,Chẳng biết mày có hiểu rằng…
Dialogue: 0,0:16:03.92,0:16:08.42,Default,,0,0,0,,Tác dụng phụ của thuốc teo cơ cực mạnh\Nđau đớn đến thế nào,
Dialogue: 0,0:16:09.42,0:16:10.88,Default,,0,0,0,,tao bị căng thẳng đến thế nào.
Dialogue: 0,0:16:11.72,0:16:12.88,Default,,0,0,0,,Thế khá hơn rồi.
Dialogue: 0,0:16:13.59,0:16:15.84,Default,,0,0,0,,Tao thích mày với đôi mắt đó hơn đấy.
Dialogue: 0,0:16:18.89,0:16:22.31,Default,,0,0,0,,Cho tao xem con quái thú trong mày đi.
Dialogue: 0,0:16:23.44,0:16:28.07,Default,,0,0,0,,Sẽ chẳng ai\Nchấp nhận con người thật của tao.
Dialogue: 0,0:16:37.32,0:16:42.62,Default,,0,0,0,,{\i1}Chúng ta chẳng là gì ngoài đám quái thú{\i0}\N{\i1}kinh khủng với móng vuốt và nanh.{\i0}
Dialogue: 0,0:16:43.54,0:16:45.54,Default,,0,0,0,,{\i1}Chính vì thế ta cần giấu mình.{\i0}
Dialogue: 0,0:16:47.21,0:16:48.54,Default,,0,0,0,,{\i1}Này, Legoshi,{\i0}
Dialogue: 0,0:16:49.09,0:16:52.88,Default,,0,0,0,,{\i1}có lẽ mày có thể hiểu{\i0}\N{\i1}tao cô đơn đến thế nào.{\i0}
Dialogue: 0,0:17:00.56,0:17:02.35,Default,,0,0,0,,{\i1}Mình chẳng thấy hắn đâu.{\i0}
Dialogue: 0,0:17:06.44,0:17:09.48,Default,,0,0,0,,Bữa ăn này\Nthiêng liêng hơn bất kỳ món nào.
Dialogue: 0,0:17:10.61,0:17:13.19,Default,,0,0,0,,Tao sẽ đưa mày\Ntới chỗ nào không ai tìm ra được ta.
Dialogue: 0,0:17:23.79,0:17:27.42,Default,,0,0,0,,Ở đây, mày có thể\Nđể tao chảy máu bao nhiêu cũng được?
Dialogue: 0,0:17:29.59,0:17:31.42,Default,,0,0,0,,Một khi đã ăn thịt sống,
Dialogue: 0,0:17:32.38,0:17:34.80,Default,,0,0,0,,ta cứ tự làm đau mình\Nvì tội lỗi và thèm khát.
Dialogue: 0,0:17:36.01,0:17:38.39,Default,,0,0,0,,Đời đi học của mày thảm quá.
Dialogue: 0,0:17:39.22,0:17:41.35,Default,,0,0,0,,Tao sẽ lấy lại Tem\Nvà đời học sinh của mình.
Dialogue: 0,0:17:44.60,0:17:47.35,Default,,0,0,0,,Tận hưởng đời học sinh hết sức có thể nhé.
Dialogue: 0,0:17:48.44,0:17:50.77,Default,,0,0,0,,Nhưng tao xé\Ncác vết thương cũ của mày ra đã.
Dialogue: 0,0:17:51.57,0:17:53.57,Default,,0,0,0,,Trả lại đời học sinh cho Tem đi.
Dialogue: 0,0:17:55.24,0:17:56.95,Default,,0,0,0,,Đấy không phải các vết thương cũ.
Dialogue: 0,0:17:57.57,0:17:59.87,Default,,0,0,0,,Và đừng bao giờ\Nđộng đến ký ức quý báu của tao!
Dialogue: 0,0:18:02.95,0:18:05.12,Default,,0,0,0,,Tem là người duy nhất chấp nhận tao.
Dialogue: 0,0:18:05.20,0:18:07.75,Default,,0,0,0,,Không! Mày đã ăn tươi nuốt sống Tem.
Dialogue: 0,0:18:07.83,0:18:11.13,Default,,0,0,0,,Bọn tao đã kết bạn\Nbất chấp khác biệt giống loài.
Dialogue: 0,0:18:11.21,0:18:13.50,Default,,0,0,0,,Mày là kẻ đã ăn thịt Tem!
Dialogue: 0,0:18:13.59,0:18:16.30,Default,,0,0,0,,Chỉ thú săn mồi\Nmới phá được bức tường giống loài.
Dialogue: 0,0:18:16.38,0:18:21.14,Default,,0,0,0,,Mày sai rồi. Chỉ tình yêu mới phá vỡ được\Nbức tường ngăn cách giống loài.
Dialogue: 0,0:18:23.10,0:18:27.64,Default,,0,0,0,,Tình yêu hả? Ta làm gì có thứ đó.
Dialogue: 0,0:18:28.69,0:18:33.57,Default,,0,0,0,,Thứ duy nhất mà móng vuốt và nanh của ta\Nđem lại là thù hận và cô độc.
Dialogue: 0,0:18:37.07,0:18:39.24,Default,,0,0,0,,Cứ thế này,\Nta sẽ làm nền thủng một hố mất.
Dialogue: 0,0:18:39.99,0:18:42.62,Default,,0,0,0,,Để tao tóm lấy mày nữa nào.
Dialogue: 0,0:18:49.75,0:18:51.13,Default,,0,0,0,,Mày định làm gì hả?
Dialogue: 0,0:18:51.21,0:18:54.38,Default,,0,0,0,,Mày đã ăn thịt mềm thú ăn cỏ\Nvà nghĩ là biết hết về thịt hả?
Dialogue: 0,0:18:55.46,0:18:58.22,Default,,0,0,0,,Mày nên nếm thử máu thịt thú ăn thịt đi!
Dialogue: 0,0:19:00.59,0:19:02.47,Default,,0,0,0,,Sao mày không ăn thịt sói đi?
Dialogue: 0,0:19:03.10,0:19:05.22,Default,,0,0,0,,Tao sẽ cho mày vỡ hàm\Nđể mày khỏi nhai được!
Dialogue: 0,0:19:06.14,0:19:08.06,Default,,0,0,0,,Có ai ở đó không?
Dialogue: 0,0:19:11.85,0:19:13.19,Default,,0,0,0,,Riz. Dừng lại.
Dialogue: 0,0:19:15.94,0:19:19.36,Default,,0,0,0,,Cô à, cháu xin lỗi.\NBọn cháu còn dùng phòng.
Dialogue: 0,0:19:19.44,0:19:20.57,Default,,0,0,0,,Gì?
Dialogue: 0,0:19:20.65,0:19:21.91,Default,,0,0,0,,Cháu xin lỗi.
Dialogue: 0,0:19:21.99,0:19:24.28,Default,,0,0,0,,Bọn cháu sẽ xong sớm thôi,\Nxin cô chờ một lát.
Dialogue: 0,0:19:24.78,0:19:27.66,Default,,0,0,0,,Được. Hiểu rồi.
Dialogue: 0,0:19:27.74,0:19:29.00,Default,,0,0,0,,Cháu xin lỗi.
Dialogue: 0,0:19:33.83,0:19:37.50,Default,,0,0,0,,Rửa sạch máu trên sàn thôi nào.
Dialogue: 0,0:19:38.01,0:19:39.92,Default,,0,0,0,,Sàn đã nát lắm rồi.
Dialogue: 0,0:19:40.84,0:19:42.34,Default,,0,0,0,,Ta làm gì đây?
Dialogue: 0,0:19:42.43,0:19:46.43,Default,,0,0,0,,Ta cứ lặng lẽ trốn đi\Nvà vờ như không biết gì.
Dialogue: 0,0:19:48.93,0:19:50.23,Default,,0,0,0,,{\i1}Cậu ta bị sao thế nhỉ?{\i0}
Dialogue: 0,0:19:51.23,0:19:56.23,Default,,0,0,0,,{\i1}Nếu cậu ta cứ làm kẻ ác thuần túy,{\i0}\N{\i1}thì dễ ghét cậu ta hơn nhiều.{\i0}
Dialogue: 0,0:19:57.65,0:20:01.82,Default,,0,0,0,,{\i1}Nếu là một năm trước,{\i0}\N{\i1}mình đã cứ thế bỏ đi rồi.{\i0}
Dialogue: 0,0:20:05.99,0:20:11.54,Default,,0,0,0,,Tao… không bao giờ… tha thứ cho mày!
Dialogue: 0,0:20:17.38,0:20:18.63,Default,,0,0,0,,Vẫn còn ở đấy à?
Dialogue: 0,0:20:18.71,0:20:20.42,Default,,0,0,0,,Tạm dừng đã, Legoshi.
Dialogue: 0,0:20:22.26,0:20:25.09,Default,,0,0,0,,Ta sẽ xử lý chuyện này vào đêm giao thừa.
Dialogue: 0,0:20:28.97,0:20:31.85,Default,,0,0,0,,Đêm giao thừa được đấy.
Dialogue: 0,0:20:32.98,0:20:35.77,Default,,0,0,0,,Có nhiều thời gian\Nđể chuẩn bị giết mày cho chuẩn.
Dialogue: 0,0:20:36.81,0:20:39.52,Default,,0,0,0,,Hãy xử lý dứt điểm như thú ăn thịt đi.
Dialogue: 0,0:20:43.32,0:20:45.32,Default,,0,0,0,,Tuyệt thật. Dễ hiểu mà.
Dialogue: 0,0:20:46.24,0:20:49.12,Default,,0,0,0,,Đáng ra cậu có thể đưa nó đến cảnh sát.
Dialogue: 0,0:20:50.62,0:20:52.45,Default,,0,0,0,,Thế mới giống cậu mà.
Dialogue: 0,0:20:53.96,0:20:57.38,Default,,0,0,0,,Em chỉ theo nguyên tắc của anh.
Dialogue: 0,0:20:58.79,0:21:01.80,Default,,0,0,0,,Trước đây,\Nem từng cố ăn thịt một thú ăn cỏ.
Dialogue: 0,0:21:03.05,0:21:07.89,Default,,0,0,0,,Em muốn đối đầu với cậu ta\Nhơn là chỉ trừng phạt cậu ta.
Dialogue: 0,0:21:09.60,0:21:13.48,Default,,0,0,0,,Nhưng em bị đánh thảm quá.\NEm chẳng có cơ may thắng nhỉ?
Dialogue: 0,0:21:15.06,0:21:17.31,Default,,0,0,0,,Giá mà em khỏe lên ngay lập tức.
Dialogue: 0,0:21:18.61,0:21:22.19,Default,,0,0,0,,Nhưng không có cách nào nhỉ?
