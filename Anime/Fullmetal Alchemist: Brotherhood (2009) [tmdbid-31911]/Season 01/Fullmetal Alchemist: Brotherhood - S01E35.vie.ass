Dialogue: 0,0:00:00.00,0:00:02.98,Title - TS,Nar,0000,0000,0000,,{\pos(332,168)\bord4\blur7}Tập 35
Dialogue: 0,0:00:00.00,0:00:02.98,Title - TS,Nar,0000,0000,0000,,{\fs80\pos(640,552)\bord4\blur7}Hình Dạng Của Đất Nước Này
Dialogue: 0,0:00:00.00,0:00:02.98,Credit,Nar,0000,0000,0000,,{\bord4\blur7}Subbed by BLACK - ATeam
Dialogue: 0,0:00:04.31,0:00:06.90,Default,Oli,0000,0000,0000,,Ta sẽ cho cậu thấy cách chiến đấu của Briggs.
Dialogue: 0,0:00:07.23,0:00:08.69,Default,Ed,0000,0000,0000,,"Cách chiến đấu của Briggs"?
Dialogue: 0,0:00:09.48,0:00:10.40,Default,Bucca,0000,0000,0000,,Đúng đó.
Dialogue: 0,0:00:11.07,0:00:13.28,Default,Bucca,0000,0000,0000,,Mau giúp một tay nào, giả kim thuật sư!
Dialogue: 0,0:00:14.41,0:00:15.49,Default,Al,0000,0000,0000,,Anh hai!
Dialogue: 0,0:00:15.49,0:00:16.91,Default,Bucca,0000,0000,0000,,Cả cậu nữa!
Dialogue: 0,0:00:17.28,0:00:19.66,Default,Ed,0000,0000,0000,,Khoan đã, chúng tôi...
Dialogue: 0,0:00:20.20,0:00:22.71,Default,Bucca,0000,0000,0000,,Các cậu bị đe dọa và buộc phải giúp chúng tôi.
Dialogue: 0,0:00:23.08,0:00:25.17,Default,Bucca,0000,0000,0000,,Như vậy thì chẳng ai trách các cậu được nhỉ?
Dialogue: 0,0:00:26.63,0:00:27.75,Default,Bucca,0000,0000,0000,,Ai đây?
Dialogue: 0,0:00:27.75,0:00:29.46,Default,Ed,0000,0000,0000,,Là người anh em của bọn tôi.
Dialogue: 0,0:00:29.46,0:00:31.01,Default,Bucca,0000,0000,0000,,Được, anh cũng đi cùng.
Dialogue: 0,0:00:32.67,0:00:34.17,Default,Bucca,0000,0000,0000,,Mau lên! Không được để rớt đâu đấy!
Dialogue: 0,0:00:34.72,0:00:37.05,Default,Miles,0000,0000,0000,,Buccaneer! Đến cửa số 8!
Dialogue: 0,0:00:37.05,0:00:37.68,Default,Bucca,0000,0000,0000,,Rõ!
Dialogue: 0,0:00:40.39,0:00:41.47,Default,Oli,0000,0000,0000,,Tiến lên!
Dialogue: 0,0:00:41.47,0:00:43.31,Default,Oli,0000,0000,0000,,Đẩy nó vào trong thang máy!
Dialogue: 0,0:00:55.65,0:00:58.62,Default,Sloth,0000,0000,0000,,Phiền phức quá...
Dialogue: 0,0:01:01.04,0:01:02.79,Default,Oli,0000,0000,0000,,Đẩy đi, đẩy mạnh lên!
Dialogue: 0,0:01:04.87,0:01:06.46,Default,Oli,0000,0000,0000,,Tốt lắm, sắp được rồi!
Dialogue: 0,0:01:06.62,0:01:08.08,Default,Oli,0000,0000,0000,,Quay nòng sang phải!
Dialogue: 0,0:01:08.08,0:01:09.79,Default,Guy,0000,0000,0000,,Rõ.
Dialogue: 0,0:01:14.38,0:01:15.67,Default,Oli,0000,0000,0000,,Miles, đưa hắn đi!
Dialogue: 0,0:01:15.92,0:01:17.13,Default,Miles,0000,0000,0000,,Rõ!
Dialogue: 0,0:01:23.81,0:01:25.31,Default,Guy,0000,0000,0000,,Tốt lắm, thành công rồi!
Dialogue: 0,0:01:35.19,0:01:37.57,Default,Sloth,0000,0000,0000,,Đây... là đâu?
Dialogue: 0,0:01:43.95,0:01:45.54,Default,Bucca,0000,0000,0000,,Nào, đổ đi!
Dialogue: 0,0:01:51.13,0:01:52.25,Default,Bucca,0000,0000,0000,,Tốt lắm!
Dialogue: 0,0:01:53.46,0:01:55.17,Default,Al,0000,0000,0000,,Giờ thì sao đây?
Dialogue: 0,0:01:55.38,0:01:58.43,Default,Ed,0000,0000,0000,,Làm sao để đẩy hắn ra cửa đây?
Dialogue: 0,0:01:56.63,0:01:58.43,Default-alt,Sloth,0000,0000,0000,,Hôi quá.
Dialogue: 0,0:02:12.52,0:02:14.02,Default,Oli,0000,0000,0000,,Tránh ra, thằng nhóc!
Dialogue: 0,0:02:26.20,0:02:27.96,Default,Oli,0000,0000,0000,,Này, bắn thêm phát nữa đi!
Dialogue: 0,0:02:27.96,0:02:28.87,Default,Guy,0000,0000,0000,,Hết đạn rồi ạ!
Dialogue: 0,0:02:29.04,0:02:30.71,Default,Fal,0000,0000,0000,,Vậy thì...
Dialogue: 0,0:02:34.84,0:02:35.92,Default,Sloth,0000,0000,0000,,Đau quá...
Dialogue: 0,0:02:43.80,0:02:45.10,Default,Ed,0000,0000,0000,,Xong rồi!
Dialogue: 0,0:02:45.47,0:02:48.56,Default,Bucca,0000,0000,0000,,Đây là xăng chuyên dụng của miền Bắc.
Dialogue: 0,0:02:49.23,0:02:51.90,Default,Bucca,0000,0000,0000,,Nó có thể bốc hơi ở nhiệt độ thấp,
Dialogue: 0,0:02:51.90,0:02:54.98,Default,Bucca,0000,0000,0000,,đồng thời sẽ hút hết nhiệt của cơ thể.
Dialogue: 0,0:02:55.69,0:02:57.65,Default,Bucca,0000,0000,0000,,Hơn nữa, hắn đang ở giữa bão tuyết.
Dialogue: 0,0:02:58.03,0:03:00.57,Default,Bucca,0000,0000,0000,,Hắn sĩ bị đông cứng đến tận não.
Dialogue: 0,0:03:03.20,0:03:04.74,Default,Sloth,0000,0000,0000,,Lạnh quá...
Dialogue: 0,0:03:05.83,0:03:07.49,Default,Sloth,0000,0000,0000,,Cơ thể mình...
Dialogue: 0,0:03:08.08,0:03:12.17,Default,Sloth,0000,0000,0000,,không... cử động...
Dialogue: 0,0:03:16.55,0:03:19.09,Default,Sloth,0000,0000,0000,,Phiền... phức quá...
Dialogue: 0,0:03:27.89,0:03:31.02,Default,Oli,0000,0000,0000,,Cứ ngủ đến mùa xuân năm sau nhé, đồ ngu.
Dialogue: 0,0:03:31.98,0:03:34.40,Default,Oli,0000,0000,0000,,Buccaneer, trói ba tên này lại.
Dialogue: 0,0:03:34.40,0:03:35.31,Default,Bucca,0000,0000,0000,,Rõ!
Dialogue: 0,0:03:35.31,0:03:36.32,Default,Both,0000,0000,0000,,Cái gì!?
Dialogue: 0,0:03:37.11,0:03:38.32,Default,Ed,0000,0000,0000,,Đau đau đau!
Dialogue: 0,0:03:38.32,0:03:40.11,Default,Ed,0000,0000,0000,,Tại sao hả!?
Dialogue: 0,0:03:40.11,0:03:41.45,Default,Ed,0000,0000,0000,,Chúng tôi vừa giúp mọi người mà!
Dialogue: 0,0:03:40.69,0:03:42.32,Default-alt,Oli,0000,0000,0000,,Các cậu đã bị "ép buộc".
Dialogue: 0,0:03:42.32,0:03:44.32,Default,Oli,0000,0000,0000,,Như vậy sẽ tiện hơn cho các cậu, đúng không?
Dialogue: 0,0:03:45.24,0:03:49.43,Default,Oli,0000,0000,0000,,Ta cũng không thể thả cậu khi chưa biết rõ về con quái vật này,
Dialogue: 0,0:03:49.43,0:03:51.08,Default,Oli,0000,0000,0000,,cứ chuẩn bị tinh thần đi.
Dialogue: 0,0:03:59.96,0:04:01.34,Default,Ed,0000,0000,0000,,Lạnh quá.
Dialogue: 0,0:04:03.47,0:04:04.51,Default,Ed,0000,0000,0000,,"Leng keng"?
Dialogue: 0,0:04:05.18,0:04:07.18,Default,Al,0000,0000,0000,,Anh dậy rồi đấy à.
Dialogue: 0,0:04:08.06,0:04:10.43,Default,Ed,0000,0000,0000,,À, đúng rồi.
Dialogue: 0,0:04:10.43,0:04:12.89,Default,Neil,0000,0000,0000,,Yo! Ngủ ngon không?
Dialogue: 0,0:04:13.64,0:04:15.31,Default,Ed,0000,0000,0000,,Ngon thì ngon, nhưng...
Dialogue: 0,0:04:19.78,0:04:21.78,Default,Neil,0000,0000,0000,,Nghe nói cậu đã bảo vệ anh em trong pháo đài.
Dialogue: 0,0:04:22.86,0:04:24.07,Default,Ed,0000,0000,0000,,Cảm ơn.
Dialogue: 0,0:04:24.07,0:04:25.28,Default,Neil,0000,0000,0000,,100 cenz.
Dialogue: 0,0:04:26.49,0:04:28.49,Default,Ed,0000,0000,0000,,Anh vô ơn quá đấy nhé!
Dialogue: 0,0:04:28.49,0:04:31.08,Default,Al,0000,0000,0000,,Thế... đã có thêm tin gì chưa ạ?
Dialogue: 0,0:04:31.08,0:04:33.79,Default,Neil,0000,0000,0000,,Đội tiên phong đã xuống kiểm tra cái hố đó rồi.
Dialogue: 0,0:04:33.79,0:04:35.79,Default,Neil,0000,0000,0000,,Họ sẽ trở lại ngay thôi.
Dialogue: 0,0:04:36.00,0:04:39.17,Default,Neil,0000,0000,0000,,Còn nữa, Thiếu Tá Miles đã tới bệnh viện.
Dialogue: 0,0:04:39.17,0:04:40.30,Default,Ed,0000,0000,0000,,Bệnh viện?
Dialogue: 0,0:04:40.46,0:04:44.09,Default,Neil,0000,0000,0000,,Anh ấy đi thăm cái tên bị thương khi đánh nhau với Scar.
Dialogue: 0,0:04:44.72,0:04:46.26,Default,Ed,0000,0000,0000,,Scar cũng lên miền Bắc ư?
Dialogue: 0,0:04:46.89,0:04:48.47,Default,Guy,0000,0000,0000,,Ồ, cậu đây rồi.
Dialogue: 0,0:04:49.05,0:04:50.39,Default,Neil,0000,0000,0000,,Cậu ta tỉnh rồi.
Dialogue: 0,0:04:50.39,0:04:51.68,Default,Guy2,0000,0000,0000,,Hôm qua may mà có cậu.
Dialogue: 0,0:04:52.27,0:04:54.10,Default,Guy2,0000,0000,0000,,Cậu đã cứu mạng đồng đội của chúng tôi.
Dialogue: 0,0:04:55.56,0:04:59.44,Default,Ed,0000,0000,0000,,Các anh quan tâm tới đồng đội của mình quá nhỉ?
Dialogue: 0,0:05:00.15,0:05:02.48,Default,Guy,0000,0000,0000,,Lính Briggs chúng tôi là một tảng đá nguyên khối.
Dialogue: 0,0:05:02.48,0:05:05.40,Default,Guy,0000,0000,0000,,Cậu đã cứu mạng họ, vậy cậu cũng là anh em của chúng tôi.
Dialogue: 0,0:05:05.40,0:05:07.41,Default,Ed,0000,0000,0000,,Vậy có thể thả người anh em này không...
Dialogue: 0,0:05:07.41,0:05:09.20,Default,All,0000,0000,0000,,Chuyện đó thì không thể được.
Dialogue: 0,0:05:10.62,0:05:12.87,Default,Ed,0000,0000,0000,,Các anh đúng là đá nguyên khối nhỉ...
Dialogue: 0,0:05:14.37,0:05:17.71,Default,Miles,0000,0000,0000,,Không tìm thấy thi thể của Scar ở hiện trường.
Dialogue: 0,0:05:18.50,0:05:21.13,Default,Miles,0000,0000,0000,,Có thể hắn đang lẩn trốn trong khu vực này.
Dialogue: 0,0:05:21.55,0:05:22.71,Default,Kim,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:05:23.13,0:05:24.46,Think,Miles,0000,0000,0000,,Trời ạ...
Dialogue: 0,0:05:24.46,0:05:28.72,Think,Miles,0000,0000,0000,,Hết tìm con mèo, giờ lại tới lượt tìm Scar sao?
Dialogue: 0,0:05:29.68,0:05:30.68,Default,Miles,0000,0000,0000,,Tôi hiểu rồi.
Dialogue: 0,0:05:32.26,0:05:35.52,Default,Miles,0000,0000,0000,,Để chúng tôi tìm Scar, anh cứ yên tâm nghỉ ngơi.
Dialogue: 0,0:05:35.52,0:05:36.94,Default,Kim,0000,0000,0000,,Đợi đã.
Dialogue: 0,0:05:37.60,0:05:39.86,Default,Kim,0000,0000,0000,,Các anh đừng có dính vào vụ này.
Dialogue: 0,0:05:40.15,0:05:43.36,Default,Kim,0000,0000,0000,,Tên Ishval đó là con mồi của tôi.
Dialogue: 0,0:05:44.36,0:05:46.78,Default,Miles,0000,0000,0000,,Đáng tiếc, chúng tôi không yếu đuối tới mức
Dialogue: 0,0:05:46.78,0:05:49.49,Default,Miles,0000,0000,0000,,để một tên cuồng sát tự tung tự tác ở Briggs đâu.
Dialogue: 0,0:05:50.20,0:05:52.99,Default,Miles,0000,0000,0000,,Luật ở đây là "mạnh được yếu thua".
Dialogue: 0,0:05:55.20,0:05:58.42,Default,Miles,0000,0000,0000,,Bất cẩn là toi mạng đấy, hiểu không?
Dialogue: 0,0:05:59.17,0:06:02.21,Default,Miles,0000,0000,0000,,Còn nói nhảm là không bao giờ ra viện được đâu.
Dialogue: 0,0:06:04.84,0:06:08.47,Default,Miles,0000,0000,0000,,Briggs chúng tôi đã được lệnh hỗ trợ cho anh.
Dialogue: 0,0:06:09.26,0:06:10.84,Default,Miles,0000,0000,0000,,Vì thế, cứ nằm yên đấy đi.
Dialogue: 0,0:06:15.60,0:06:18.52,Default,Kim,0000,0000,0000,,Người Ishval đúng là thú vị.
Dialogue: 0,0:06:21.98,0:06:24.57,Default,Raven,0000,0000,0000,,Kimblee, anh có sao không?
Dialogue: 0,0:06:25.28,0:06:29.07,Default,Kim,0000,0000,0000,,Ông tới đây nhanh hơn tôi tưởng đấy, Trung Tướng Raven.
Dialogue: 0,0:06:29.07,0:06:31.57,Default,Raven,0000,0000,0000,,Nghe nói anh bị thương tôi liền chạy ngay tới đó.
Dialogue: 0,0:06:31.57,0:06:33.58,Default,Raven,0000,0000,0000,,Đáng lo quá mà.
Dialogue: 0,0:06:33.99,0:06:37.79,Default,Kim,0000,0000,0000,,Ông lo là lo cho cái này chứ gì?
Dialogue: 0,0:06:40.92,0:06:42.50,Default,Raven,0000,0000,0000,,Tốt lắm.
Dialogue: 0,0:06:42.50,0:06:43.92,Default,Raven,0000,0000,0000,,Đến giờ làm việc rồi.
Dialogue: 0,0:06:44.25,0:06:46.88,Default,Kim,0000,0000,0000,,Nhưng ông thấy đấy, tôi...
Dialogue: 0,0:06:48.30,0:06:51.18,Default,Raven,0000,0000,0000,,Tôi có đem theo một bác sĩ rất giỏi giả kim thuật đây.
Dialogue: 0,0:06:51.39,0:06:53.18,Default,Raven,0000,0000,0000,,Và chúng ta còn có Hòn Đá.
Dialogue: 0,0:06:53.68,0:06:55.72,Default,Raven,0000,0000,0000,,Anh sẽ hồi phục ngay thôi.
Dialogue: 0,0:07:05.40,0:07:08.69,Default,Marcoh,0000,0000,0000,,Luyện đan thuật khó thật đấy.
Dialogue: 0,0:07:08.94,0:07:12.45,Default,Marcoh,0000,0000,0000,,Nhất là cái khái niệm "long mạch" này.
Dialogue: 0,0:07:12.91,0:07:14.70,Default,May,0000,0000,0000,,Đó là dòng "khí" của đất đấy ạ.
Dialogue: 0,0:07:15.41,0:07:16.70,Default,Marcoh,0000,0000,0000,,Dòng "khí" của đất?
Dialogue: 0,0:07:18.29,0:07:19.83,Default,May,0000,0000,0000,,Nói một cách đơn giản,
Dialogue: 0,0:07:19.83,0:07:23.08,Default,May,0000,0000,0000,,đó là sức mạnh sau khi phun ra từ miệng núi lửa
Dialogue: 0,0:07:23.08,0:07:25.92,Default,May,0000,0000,0000,,sẽ trở lại mặt đất và làm cho nó màu mỡ.
Dialogue: 0,0:07:25.92,0:07:29.71,Default,May,0000,0000,0000,,Bác cứ coi nó là một dòng sông chảy trong lòng đất ấy.
Dialogue: 0,0:07:30.22,0:07:34.55,Default,May,0000,0000,0000,,Bằng cách tìm hiểu dòng khí ấy và lối ra vào của nó...
Dialogue: 0,0:07:38.31,0:07:41.60,Default,May,0000,0000,0000,,Ta sẽ có thể áp dụng nó trên mọi vật.
Dialogue: 0,0:07:42.39,0:07:45.11,Default,Marcoh,0000,0000,0000,,"Mọi vật" là bao gồm cả cơ thể người à?
Dialogue: 0,0:07:45.81,0:07:46.56,Default,May,0000,0000,0000,,Vâng!
Dialogue: 0,0:07:47.11,0:07:49.03,Default,May,0000,0000,0000,,Ví dụ... hông của bác!
Dialogue: 0,0:07:50.40,0:07:51.82,Default,Marcoh,0000,0000,0000,,Chân tôi...
Dialogue: 0,0:07:52.28,0:07:53.86,Default,May,0000,0000,0000,,À, cả đây nữa!
Dialogue: 0,0:07:55.62,0:07:58.95,Default,Marcoh,0000,0000,0000,,Tại sao bác lại thấy đau ở mắt khi bị chọc vào cổ?
Dialogue: 0,0:07:58.95,0:08:02.04,Default,May,0000,0000,0000,,Bác Marcoh, bác phải chú ý giữ gìn cơ thể hơn nhé.
Dialogue: 0,0:08:02.04,0:08:04.62,Default,May,0000,0000,0000,,Khí trong cơ thể bác bị trì trệ ở nhiều chỗ lắm.
Dialogue: 0,0:08:05.42,0:08:07.25,Default,Marcoh,0000,0000,0000,,Ra là vậy...
Dialogue: 0,0:08:07.25,0:08:10.13,Default,Marcoh,0000,0000,0000,,Đây chính là nguyên lý của việc chuyển hóa từ xa.
Dialogue: 0,0:08:11.88,0:08:14.89,Default,May,0000,0000,0000,,Vậy giả kim thuật của nước này không dùng long mạch ạ?
Dialogue: 0,0:08:15.14,0:08:16.66,Default,Marcoh,0000,0000,0000,,Ừ, bọn bác dùng năng lượng
Dialogue: 0,0:08:16.66,0:08:19.10,Default,Marcoh,0000,0000,0000,,tạo ra từ sự chuyển động của mảng địa chất.
Dialogue: 0,0:08:19.10,0:08:22.42,Default,Marcoh,0000,0000,0000,,Nguồn năng lượng dồi dào của các trận động đất
Dialogue: 0,0:08:22.42,0:08:24.14,Default,Marcoh,0000,0000,0000,,và núi lửa phun trào.
Dialogue: 0,0:08:24.39,0:08:27.94,Default,Marcoh,0000,0000,0000,,Giả kim thuật của nước này dùng năng lượng đó.
Dialogue: 0,0:08:28.52,0:08:30.46,Default,May,0000,0000,0000,,Nhưng... không phải đâu ạ.
Dialogue: 0,0:08:32.03,0:08:33.50,Default,May,0000,0000,0000,,Từ khi đặt chân vào nước này,
Dialogue: 0,0:08:33.50,0:08:35.03,Default,May,0000,0000,0000,,cháu đã thấy có gì đó rất lạ...
Dialogue: 0,0:08:35.66,0:08:38.28,Default,May,0000,0000,0000,,Khi ở lòng đất bên dưới Central, cháu đã xác định được...
Dialogue: 0,0:08:38.83,0:08:41.79,Default,May,0000,0000,0000,,rằng dòng năng lượng chảy dưới chân chúng ta...
Dialogue: 0,0:08:42.58,0:08:45.37,Default,May,0000,0000,0000,,không giống năng lượng từ sự vận động của mảng địa chất...
Dialogue: 0,0:08:47.79,0:08:52.46,Default,May,0000,0000,0000,,mà nó giống như rất nhiều người đang quằn quại bên dưới.
Dialogue: 0,0:09:02.22,0:09:03.10,Default,Guy,0000,0000,0000,,To quá.
Dialogue: 0,0:09:03.73,0:09:06.35,Default,Guy,0000,0000,0000,,Nó có thể chứa được cả một trung đội.
Dialogue: 0,0:09:06.35,0:09:09.61,Default,Guy,0000,0000,0000,,Địa đạo này hơi cong và không thể thấy điểm cuối.
Dialogue: 0,0:09:10.40,0:09:12.86,Default,Guy,0000,0000,0000,,Nhưng không có dấu hiệu cho thấy có người ở đây.
Dialogue: 0,0:09:14.65,0:09:15.90,Default,Oli,0000,0000,0000,,Đưa ngựa xuống.
Dialogue: 0,0:09:15.90,0:09:17.07,Default,Bucca,0000,0000,0000,,Rõ!
Dialogue: 0,0:09:17.07,0:09:18.70,Default,Oli,0000,0000,0000,,Đem cả ba người kia nữa.
Dialogue: 0,0:09:23.12,0:09:26.87,Default,Ed,0000,0000,0000,,Ồ... to thật đấy.
Dialogue: 0,0:09:27.12,0:09:29.72,Default,Oli,0000,0000,0000,,Thật không ngờ ta để cho hắn đột nhập vào
Dialogue: 0,0:09:29.72,0:09:31.38,Default,Oli,0000,0000,0000,,mà chẳng hề biết gì cả...
Dialogue: 0,0:09:31.38,0:09:34.34,Default,Ed,0000,0000,0000,,Vậy đây là lần đầu tiên Briggs bị xâm nhập ạ?
Dialogue: 0,0:09:34.88,0:09:36.63,Default,Oli,0000,0000,0000,,Từ khi ta tới đây thì đúng vậy.
Dialogue: 0,0:09:37.30,0:09:39.12,Default,Oli,0000,0000,0000,,Nhưng khoảng 20 năm trước,
Dialogue: 0,0:09:39.12,0:09:42.64,Default,Oli,0000,0000,0000,,đã có chuyện lính biên phòng bị tấn công giữa mùa đông.
Dialogue: 0,0:09:43.35,0:09:44.88,Default,Oli,0000,0000,0000,,Trong khoảng một tháng,
Dialogue: 0,0:09:44.88,0:09:47.81,Default,Oli,0000,0000,0000,,một người phụ nữ bí ẩn đã cướp lương thực và trang bị của họ.
Dialogue: 0,0:09:48.73,0:09:51.98,Default,Izumi,0000,0000,0000,,Ta đã sống sót qua một tháng ở Briggs đó!
Dialogue: 0,0:09:51.98,0:09:53.53,Think,Both,0000,0000,0000,,Chắc là sư phụ rồi...
Dialogue: 0,0:09:56.49,0:09:58.03,Default,Oli,0000,0000,0000,,Có lẽ là đủ xa rồi.
Dialogue: 0,0:09:58.66,0:09:59.86,Default,Oli,0000,0000,0000,,Xuống đi.
Dialogue: 0,0:10:02.12,0:10:03.03,Default,Oli,0000,0000,0000,,Giờ thì...
Dialogue: 0,0:10:03.37,0:10:06.04,Default,Oli,0000,0000,0000,,Ở dưới này thì không phải lo có người nghe trộm nữa.
Dialogue: 0,0:10:06.62,0:10:09.08,Default,Oli,0000,0000,0000,,Hãy nói tất cả những gì các cậu biết.
Dialogue: 0,0:10:09.75,0:10:11.04,Default,Oli,0000,0000,0000,,Hãy nói toàn bộ.
Dialogue: 0,0:10:12.54,0:10:14.13,Default,Oli,0000,0000,0000,,Không được giấu gì hết.
Dialogue: 0,0:10:14.84,0:10:17.07,Default,Oli,0000,0000,0000,,Khi ta hỏi về con quái vật đó,
Dialogue: 0,0:10:17.07,0:10:20.18,Default,Oli,0000,0000,0000,,cậu đã nói "Mong ngài hiểu cho tôi"?
Dialogue: 0,0:10:21.30,0:10:25.77,Default,Oli,0000,0000,0000,,Vậy tức là cậu tin ta sẽ nhận ra hoàn cảnh của hai cậu.
Dialogue: 0,0:10:26.35,0:10:29.17,Default,Oli,0000,0000,0000,,Khi đó ta hoàn toàn có quyền chém chết các cậu,
Dialogue: 0,0:10:29.30,0:10:31.81,Default,Oli,0000,0000,0000,,vậy mà các cậu vẫn dám nói vậy.
Dialogue: 0,0:10:32.23,0:10:34.07,Default,Oli,0000,0000,0000,,Ta nhận ra các cậu đang phải bảo vệ thứ gì đó
Dialogue: 0,0:10:34.07,0:10:35.82,Default,Oli,0000,0000,0000,,dù có phải hi sinh tính mạng.
Dialogue: 0,0:10:35.98,0:10:37.82,Default,Oli,0000,0000,0000,,Ví dụ như một con tin chẳng hạn.
Dialogue: 0,0:10:40.49,0:10:42.82,Default,Oli,0000,0000,0000,,Ta không muốn nghe mấy lời rườm rà.
Dialogue: 0,0:10:43.12,0:10:44.62,Default,Oli,0000,0000,0000,,Hãy nói cho ta sự thật.
Dialogue: 0,0:10:49.50,0:10:51.21,Default,Ed,0000,0000,0000,,Chúng tôi cần Thiếu Tướng giúp đỡ.
Dialogue: 0,0:10:55.00,0:10:58.34,Default,Oli,0000,0000,0000,,Hòn Đá Triết Gia... Homunculus...
Dialogue: 0,0:10:58.92,0:11:03.05,Default,Oli,0000,0000,0000,,King Bradley và kẻ được gọi là "phụ thân"...
Dialogue: 0,0:11:03.05,0:11:05.35,Default,Oli,0000,0000,0000,,Toàn bộ giới cấp cao đã thối nát....
Dialogue: 0,0:11:05.76,0:11:08.02,Default,Bucca,0000,0000,0000,,Đồng thời, có người bị giữ làm con tin.
Dialogue: 0,0:11:08.85,0:11:12.40,Default,Oli,0000,0000,0000,,Người bạn làm thợ automail của cậu và thuộc hạ của Mustang...
Dialogue: 0,0:11:13.06,0:11:16.14,Default,Oli,0000,0000,0000,,Chúng ta đã nhiều lần tập trận chung với miền Đông
Dialogue: 0,0:11:16.14,0:11:18.78,Default,Oli,0000,0000,0000,,nên ta biết Hawkeye và Havoc.
Dialogue: 0,0:11:19.44,0:11:21.53,Default,Oli,0000,0000,0000,,Để mất họ thì thật đáng tiếc.
Dialogue: 0,0:11:21.91,0:11:23.24,Default,Oli,0000,0000,0000,,Ta phải làm gì đó.
Dialogue: 0,0:11:23.66,0:11:26.49,Default,Fal,0000,0000,0000,,Thế... còn Đại Tá Mustang thì sao ạ?
Dialogue: 0,0:11:27.49,0:11:30.12,Default,Oli,0000,0000,0000,,À... kệ hắn.
Dialogue: 0,0:11:30.66,0:11:32.98,Default,Oli,0000,0000,0000,,Thật ra hắn mà toi mạng sớm thì càng tốt,
Dialogue: 0,0:11:32.98,0:11:34.92,Default,Oli,0000,0000,0000,,để ta lại giảm được một tay đối thủ.
Dialogue: 0,0:11:36.38,0:11:39.46,Default,Oli,0000,0000,0000,,Quan trọng nhất là quyết định xem từ giờ phải làm gì.
Dialogue: 0,0:11:39.92,0:11:43.13,Default,Oli,0000,0000,0000,,Giả kim thuật sư các cậu thấy địa đạo này thế nào?
Dialogue: 0,0:11:52.06,0:11:56.19,Default,Ed,0000,0000,0000,,Tôi không nghĩ địa đạo này tới từ Drachma.
Dialogue: 0,0:11:57.02,0:11:58.83,Default,Ed,0000,0000,0000,,Đây chỉ là giả thuyết,
Dialogue: 0,0:11:58.83,0:12:02.95,Default,Ed,0000,0000,0000,,nhưng có lẽ nó được đào để tạo ra một vòng tròn lớn.
Dialogue: 0,0:12:02.95,0:12:03.74,Default,Bucca,0000,0000,0000,,Vòng tròn?
Dialogue: 0,0:12:04.61,0:12:06.27,Default,Ed,0000,0000,0000,,Trong giả kim thuật,
Dialogue: 0,0:12:06.27,0:12:08.61,Default,Ed,0000,0000,0000,,vòng tròn chi phối sự luân chuyển của sức mạnh,
Dialogue: 0,0:12:08.61,0:12:09.74,Default,Ed,0000,0000,0000,,nó rất quan trọng.
Dialogue: 0,0:12:10.87,0:12:12.50,Default,Ed,0000,0000,0000,,Giờ là tới các điểm...
Dialogue: 0,0:12:14.58,0:12:15.78,Default,Ed,0000,0000,0000,,Trung Úy Falman,
Dialogue: 0,0:12:15.78,0:12:20.26,Default,Ed,0000,0000,0000,,anh có biết các sự kiện lớn trong nước mà dẫn tới đổ máu không?
Dialogue: 0,0:12:20.26,0:12:21.38,Default,Fal,0000,0000,0000,,Đổ máu à?
Dialogue: 0,0:12:23.26,0:12:24.72,Default,Fal,0000,0000,0000,,Vậy thì liên quan gì...
Dialogue: 0,0:12:30.39,0:12:34.14,Default,Fal,0000,0000,0000,,Tháng 7 năm 1558, sự kiện Riviere.
Dialogue: 0,0:12:34.14,0:12:36.40,Default,Ed,0000,0000,0000,,Riviere...
Dialogue: 0,0:12:37.81,0:12:41.57,Default,Fal,0000,0000,0000,,Tháng 10 năm 1661, nội chiến ở Cameron.
Dialogue: 0,0:12:42.40,0:12:46.20,Default,Fal,0000,0000,0000,,Tháng 2 năm 1799, sự kiện Soapman.
Dialogue: 0,0:12:46.20,0:12:47.62,Default,Fal,0000,0000,0000,,Nó xảy ra ở Fisk.
Dialogue: 0,0:12:48.62,0:12:52.16,Default,Fal,0000,0000,0000,,Tháng 3 năm 1811, sự kiện Wellsley.
Dialogue: 0,0:12:52.75,0:12:54.57,Default,Fal,0000,0000,0000,,Tháng 10 năm 1835,
Dialogue: 0,0:12:54.57,0:12:56.88,Default,Fal,0000,0000,0000,,xung đột biên giới phía nam lần thứ nhất,
Dialogue: 0,0:12:56.88,0:12:59.17,Default,Fal,0000,0000,0000,,ở tây bắc South City hiện tại.
Dialogue: 0,0:13:00.00,0:13:01.71,Default,Fal,0000,0000,0000,,Tháng 5 năm 1911,
Dialogue: 0,0:13:01.71,0:13:05.09,Default,Fal,0000,0000,0000,,ở nam Fortsett xảy ra xung đột biên giới phía nam lần 2.
Dialogue: 0,0:13:05.76,0:13:07.18,Default,Ed,0000,0000,0000,,Pendleton ở miền Tây thì sao?
Dialogue: 0,0:13:07.93,0:13:11.68,Default,Fal,0000,0000,0000,,Trong cuộc chiến với nước Creta, nhiều binh lính đã hi sinh.
Dialogue: 0,0:13:12.06,0:13:16.35,Default,Fal,0000,0000,0000,,Và năm 1914, cuộc bạo động ở Liore.
Dialogue: 0,0:13:16.35,0:13:17.69,Default,Fal,0000,0000,0000,,Tử vong rất nhiều.
Dialogue: 0,0:13:17.94,0:13:18.94,Default,Ed,0000,0000,0000,,Cái gì...
Dialogue: 0,0:13:18.94,0:13:21.02,Default,Al,0000,0000,0000,,Bạo động? Tại sao chứ?
Dialogue: 0,0:13:21.52,0:13:24.39,Default,Ed,0000,0000,0000,,Chúng tôi đã lập tức báo với Bộ Tư Lệnh miền Đông
Dialogue: 0,0:13:24.39,0:13:27.49,Default,Ed,0000,0000,0000,,sau khi vạch mặt tên giáo chủ mà.
Dialogue: 0,0:13:27.49,0:13:28.87,Default,Fal,0000,0000,0000,,Là do quân đội Trung Ương.
Dialogue: 0,0:13:29.45,0:13:33.12,Default,Fal,0000,0000,0000,,Họ tới đó và buộc quân miền Đông rút lui.
Dialogue: 0,0:13:33.12,0:13:36.41,Default,Fal,0000,0000,0000,,Sau đó, Liore trở thành một đống hỗn loạn.
Dialogue: 0,0:13:36.41,0:13:37.71,Default,Ed,0000,0000,0000,,Không thể nào...
Dialogue: 0,0:13:37.71,0:13:38.63,Default,Ed,0000,0000,0000,,Khốn kiếp!
Dialogue: 0,0:13:38.63,0:13:41.21,Default,Oli,0000,0000,0000,,Tiếp tục công việc đi, Cang.
Dialogue: 0,0:13:43.55,0:13:44.59,Default,Ed,0000,0000,0000,,Tôi biết rồi.
Dialogue: 0,0:13:47.76,0:13:50.97,Default,Ed,0000,0000,0000,,Giờ thì nối các điểm lại.
Dialogue: 0,0:13:54.02,0:13:55.23,Default,Fal,0000,0000,0000,,Cái gì thế này!?
Dialogue: 0,0:13:55.43,0:13:59.56,Default,Fal,0000,0000,0000,,Trông nó y như luyện thành trận ở Phòng Nghiên Cứu số 5!
Dialogue: 0,0:14:00.61,0:14:04.23,Default,Bucca,0000,0000,0000,,Trận pháp chế tạo Hòn Đá Triết Gia sử dụng mạng người...
Dialogue: 0,0:14:04.57,0:14:06.93,Default,Bucca,0000,0000,0000,,Nếu chúng dùng trận pháp lớn như vậy
Dialogue: 0,0:14:06.93,0:14:09.49,Default,Bucca,0000,0000,0000,,thì bao nhiêu người sẽ phải chết đây!?
Dialogue: 0,0:14:10.53,0:14:14.87,Default,Marcoh,0000,0000,0000,,Bác đã từng hỏi Envy rằng có phải chúng định dùng đất nước này
Dialogue: 0,0:14:14.87,0:14:16.50,Default,Marcoh,0000,0000,0000,,để chế tạo Hòn Đá không.
Dialogue: 0,0:14:17.00,0:14:22.50,Default,Marcoh,0000,0000,0000,,Nhưng hắn đã cười và bảo bác đoán gần đúng.
Dialogue: 0,0:14:23.09,0:14:25.96,Default,Marcoh,0000,0000,0000,,Ngày trước, bác đã bảo Edward rằng
Dialogue: 0,0:14:25.96,0:14:30.51,Default,Marcoh,0000,0000,0000,,cậu ấy sẽ tìm được "sự thật ẩn sau sự thật".
Dialogue: 0,0:14:31.18,0:14:32.54,Default,Marcoh,0000,0000,0000,,"Sự thật" mà bác muốn nói
Dialogue: 0,0:14:32.54,0:14:36.02,Default,Marcoh,0000,0000,0000,,là việc nguyên liệu của Hòn Đá là người sống.
Dialogue: 0,0:14:36.64,0:14:38.34,Default,Marcoh,0000,0000,0000,,"Sự thật" sâu hơn nữa
Dialogue: 0,0:14:38.34,0:14:41.15,Default,Marcoh,0000,0000,0000,,chính là sự tồn tại của những kẻ chủ mưu.
Dialogue: 0,0:14:41.35,0:14:43.28,Default,Marcoh,0000,0000,0000,,"Sự thật ẩn sau sự thật"
Dialogue: 0,0:14:43.28,0:14:47.15,Default,Marcoh,0000,0000,0000,,là việc chế tạo Hòn Đá Triết Gia bằng cả đất nước.
Dialogue: 0,0:14:47.15,0:14:50.11,Default,Marcoh,0000,0000,0000,,Nhưng như vậy vẫn chưa đủ.
Dialogue: 0,0:14:50.11,0:14:53.87,Default,Marcoh,0000,0000,0000,,Chúng ta vẫn không biết rốt cục chúng có mưu đồ gì...
Dialogue: 0,0:14:54.53,0:14:57.16,Default,Marcoh,0000,0000,0000,,và cả cái "bất lão bất tử" mà cháu đang tìm kiếm nữa.
Dialogue: 0,0:14:57.83,0:15:00.96,Default,Marcoh,0000,0000,0000,,Vì thế, cháu không được mong ước Hòn Đá Triết Gia.
Dialogue: 0,0:15:01.71,0:15:05.26,Default,Marcoh,0000,0000,0000,,Bằng cách kết hợp kiến thức giả kim thuật của bác và luyện đan thuật của cháu,
Dialogue: 0,0:15:05.26,0:15:08.72,Default,Marcoh,0000,0000,0000,,ta phải giải mã được tài liệu này.
Dialogue: 0,0:15:08.72,0:15:09.67,Default,May,0000,0000,0000,,Vâng.
Dialogue: 0,0:15:14.30,0:15:17.68,Default,Ed,0000,0000,0000,,Sự kiện đầu tiên là từ 1558...
Dialogue: 0,0:15:18.27,0:15:20.64,Default,Oli,0000,0000,0000,,Ngay sau khi Amestris được thành lập.
Dialogue: 0,0:15:21.10,0:15:22.67,Default,Fal,0000,0000,0000,,Không thèm tuyên chiến,
Dialogue: 0,0:15:22.67,0:15:26.02,Default,Fal,0000,0000,0000,,Amestris đã xâm lược nước bên cạnh là Riviere...
Dialogue: 0,0:15:26.73,0:15:27.44,Default,Fal,0000,0000,0000,,Khoan đã!
Dialogue: 0,0:15:29.07,0:15:30.45,Default,Fal,0000,0000,0000,,Chuyện này...
Dialogue: 0,0:15:30.90,0:15:33.87,Default,Fal,0000,0000,0000,,Quân đội đều dính dáng đến các sự kiện này.
Dialogue: 0,0:15:35.07,0:15:38.83,Default,Fal,0000,0000,0000,,Đảo chính, nội loạn, và cả Liore nữa.
Dialogue: 0,0:15:39.25,0:15:42.37,Default,Fal,0000,0000,0000,,Quân Trung Ương khi xuất hiện đã đổ thêm dầu vào lửa.
Dialogue: 0,0:15:43.00,0:15:44.67,Default,Ed,0000,0000,0000,,Từ khi đất nước mới thành lập ư?
Dialogue: 0,0:15:45.84,0:15:49.55,Default,Oil,0000,0000,0000,,Nước ta vốn chỉ là một nước nhỏ,
Dialogue: 0,0:15:49.55,0:15:52.97,Default,Oil,0000,0000,0000,,nhưng đã mở rộng nhờ xâm lược các nước xung quanh.
Dialogue: 0,0:15:54.01,0:15:55.72,Default,Oil,0000,0000,0000,,Thì ra là để tạo nên vòng tròn này sao?
Dialogue: 0,0:15:57.06,0:16:02.08,Default,Ed,0000,0000,0000,,Vậy là không phải chúng lợi dụng đất nước này để làm gì đó,
Dialogue: 0,0:16:02.08,0:16:05.98,Default,Ed,0000,0000,0000,,mà chúng đã tạo ra đất nước này để hoàn thành âm mưu.
Dialogue: 0,0:16:07.11,0:16:08.40,Default,Oli,0000,0000,0000,,Đất nước của chúng ta...
Dialogue: 0,0:16:11.74,0:16:13.82,Default,Al,0000,0000,0000,,Vậy chú Hughes...
Dialogue: 0,0:16:13.82,0:16:16.07,Default,Ed,0000,0000,0000,,Ừ, trước khi bị giết chết
Dialogue: 0,0:16:16.07,0:16:18.24,Default,Ed,0000,0000,0000,,chú ấy đã nhìn thấy luyện thành trận chế tạo Hòn Đá.
Dialogue: 0,0:16:19.04,0:16:21.17,Default,Ed,0000,0000,0000,,Vì chú ấy làm việc trong ngành chiến lược
Dialogue: 0,0:16:21.17,0:16:24.08,Default,Ed,0000,0000,0000,,nên càng dễ thu thập tư liệu về các sự kiện của quân đội.
Dialogue: 0,0:16:24.50,0:16:27.96,Default,Ed,0000,0000,0000,,Chú ấy là người đầu tiên nhận ra điểm kì quái của đất nước...
Dialogue: 0,0:16:29.05,0:16:32.17,Default,Isaac,0000,0000,0000,,Chó săn của quân đội. Giả Kim Thuật Sư Quốc Gia!
Dialogue: 0,0:16:32.17,0:16:36.34,Default,Isaac,0000,0000,0000,,Ngươi có biết ở đất nước này đang diễn ra chuyện gì không?
Dialogue: 0,0:16:36.34,0:16:41.72,Default,Envy,0000,0000,0000,,Các ngươi tưởng sự phồn vinh hiện tại là do các ngươi tự tay tạo ra sao?
Dialogue: 0,0:16:41.72,0:16:45.73,Default,Isaac,0000,0000,0000,,Nếu ngươi biết, ngươi sẽ hiểu tại sao ta lại làm thế này!
Dialogue: 0,0:16:48.11,0:16:49.44,Default,Oli,0000,0000,0000,,Không thể chấp nhận được!
Dialogue: 0,0:16:50.69,0:16:53.99,Default,Oli,0000,0000,0000,,Cứ nhìn theo bản đồ thì nơi tiếp theo phải đổ máu sẽ là...
Dialogue: 0,0:16:54.32,0:16:58.66,Default,Oli,0000,0000,0000,,Điểm duy nhất còn lại chính là Briggs này!
Dialogue: 0,0:16:58.66,0:17:03.20,Default,Oli,0000,0000,0000,,Lũ lợn Central này định làm gì với lâu đài của ta đây!?
Dialogue: 0,0:17:03.20,0:17:04.62,Default,Guy,0000,0000,0000,,Thiếu Tướng!
Dialogue: 0,0:17:05.12,0:17:06.96,Default,Guy,0000,0000,0000,,Xin ngài quay về ngay lập tức.
Dialogue: 0,0:17:06.96,0:17:09.63,Default,Guy,0000,0000,0000,,Trung Tướng Raven ở Central tới ạ.
Dialogue: 0,0:17:11.50,0:17:13.38,Default,Oli,0000,0000,0000,,Chúng không cho ta thời gian suy nghĩ nhỉ?
Dialogue: 0,0:17:14.84,0:17:16.26,Default,Ed,0000,0000,0000,,Thiếu Tướng Armstrong.
Dialogue: 0,0:17:17.59,0:17:19.64,Default,Ed,0000,0000,0000,,Tôi có việc muốn nhờ ngài.
Dialogue: 0,0:17:21.64,0:17:25.14,Default,Ed,0000,0000,0000,,Ngài có thể lừa Trung Tướng Raven được không?
Dialogue: 0,0:17:28.06,0:17:31.98,Default,Miles,0000,0000,0000,,Trung Tướng Raven, xin lỗi đã bắt ngài đợi lâu.
Dialogue: 0,0:17:32.53,0:17:34.15,Default,Raven,0000,0000,0000,,Không sao, anh đừng bận tâm.
Dialogue: 0,0:17:34.65,0:17:36.78,Default,Raven,0000,0000,0000,,Tôi cũng có lỗi vì đến đây mà không báo trước mà.
Dialogue: 0,0:17:37.70,0:17:40.20,Default,Miles,0000,0000,0000,,Thiếu Tướng Armstrong sắp về rồi ạ.
Dialogue: 0,0:17:40.20,0:17:40.94,Default,Miles,0000,0000,0000,,Mời ngài theo tôi...
Dialogue: 0,0:17:41.02,0:17:42.08,Default,Raven,0000,0000,0000,,À, đúng rồi.
Dialogue: 0,0:17:42.45,0:17:44.04,Default,Raven,0000,0000,0000,,Tôi có đi cùng một người khách đây.
Dialogue: 0,0:17:44.45,0:17:45.50,Default,Raven,0000,0000,0000,,Thiếu Tá Miles,
Dialogue: 0,0:17:45.50,0:17:48.79,Default,Raven,0000,0000,0000,,anh có thể dẫn anh ấy đi tham quan pháo đài không?
Dialogue: 0,0:17:50.04,0:17:52.88,Default,Kim,0000,0000,0000,,Rất hân hạnh, Thiếu Tá Miles.
Dialogue: 0,0:17:58.93,0:18:00.76,Default,Al,0000,0000,0000,,Bánh táo của Winry.
Dialogue: 0,0:18:02.14,0:18:05.02,Default,Al,0000,0000,0000,,Những thứ mà em bảo là muốn ăn sau khi phục hồi cơ thể.
Dialogue: 0,0:18:05.02,0:18:09.73,Default,Al,0000,0000,0000,,Xem ra bây giờ có nhiều chuyện phải lo trước rồi.
Dialogue: 0,0:18:10.56,0:18:13.19,Default,Ed,0000,0000,0000,,Đừng lo, rồi sẽ có ngày em được ăn thôi.
Dialogue: 0,0:18:14.36,0:18:15.94,Default,Ed,0000,0000,0000,,Sau khi ta lấy lại cơ thể
Dialogue: 0,0:18:15.94,0:18:20.87,Default,Ed,0000,0000,0000,,và cho cái bọn cả gan dùng đất nước này vì âm mưu riêng ra bã.
Dialogue: 0,0:18:21.57,0:18:22.58,Default,Al,0000,0000,0000,,Ừ.
Dialogue: 0,0:18:23.91,0:18:26.58,Default,Oli,0000,0000,0000,,Xin lỗi vì chỗ này hơi bừa bộn, thưa ngài.
Dialogue: 0,0:18:26.83,0:18:29.04,Default,Oli,0000,0000,0000,,Chúng tôi vừa bị quân địch tấn công.
Dialogue: 0,0:18:29.04,0:18:30.08,Default,Raven,0000,0000,0000,,Bị tấn công?
Dialogue: 0,0:18:30.75,0:18:32.99,Default,Oli,0000,0000,0000,,Tuy đã đẩy lui được nó, nhưng...
Dialogue: 0,0:18:32.99,0:18:35.92,Default,Oli,0000,0000,0000,,phải nói nó đúng là một con quái vật.
Dialogue: 0,0:18:36.34,0:18:38.67,Default,Raven,0000,0000,0000,,"Quái vật" tức là sao?
Dialogue: 0,0:18:39.63,0:18:41.84,Default,Oli,0000,0000,0000,,Dù bị giết nó cũng không thể chết.
Dialogue: 0,0:18:44.26,0:18:46.35,Default,Raven,0000,0000,0000,,Vậy thì phiền quá nhỉ.
Dialogue: 0,0:18:47.60,0:18:51.22,Default,Oli,0000,0000,0000,,Tôi thì nghĩ nó là vũ khí sinh vật của Drachma,
Dialogue: 0,0:18:51.22,0:18:53.11,Default,Oli,0000,0000,0000,,nhưng Anh Em Elric thì...
Dialogue: 0,0:18:54.52,0:18:58.95,Default,Oli,0000,0000,0000,,Chúng tôi đã tình cờ bắt được Cang Giả Kim Thuật Sư và em trai.
Dialogue: 0,0:18:59.90,0:19:04.83,Default,Oli,0000,0000,0000,,Hình như chúng biết gì đó về con quái vật nhưng không chịu nói.
Dialogue: 0,0:19:05.74,0:19:08.69,Default,Oli,0000,0000,0000,,Nếu một Giả Kim Thuật Sư Quốc Gia phục vụ cho Tổng Thống
Dialogue: 0,0:19:08.69,0:19:11.58,Default,Oli,0000,0000,0000,,mà lại là gián điệp của Drachma thì thật lớn chuyện,
Dialogue: 0,0:19:11.58,0:19:13.42,Default,Oli,0000,0000,0000,,vì thế tôi đã giam chúng nó lại.
Dialogue: 0,0:19:13.42,0:19:14.96,Default,Oli,0000,0000,0000,,Ngài có muốn gặp chúng không?
Dialogue: 0,0:19:16.46,0:19:17.34,Default,Raven,0000,0000,0000,,Vậy à.
Dialogue: 0,0:19:18.55,0:19:20.34,Rad,Raven,0000,0000,0000,,Họ không nói gì hả?
Dialogue: 0,0:19:20.72,0:19:21.34,Rad,Oli,0000,0000,0000,,Vâng.
Dialogue: 0,0:19:21.93,0:19:26.10,Rad,Oli,0000,0000,0000,,Chúng nói tới đây là để nghiên cứu việc chuyển hóa cơ thể gì đó.
Dialogue: 0,0:19:26.10,0:19:30.35,Default,Oli,0000,0000,0000,,Chúng ăn nói mập mờ quá, tôi không thể không nghi ngờ.
Dialogue: 0,0:19:34.90,0:19:40.11,Default,Oli,0000,0000,0000,,Tôi cũng định tra tấn chúng, nhưng rốt lại tôi vẫn là phụ nữ.
Dialogue: 0,0:19:40.61,0:19:42.49,Default,Oli,0000,0000,0000,,Tôi thật không nỡ nặng tay với trẻ con.
Dialogue: 0,0:19:42.49,0:19:45.03,Rad,Oli,0000,0000,0000,,Vì nếu vậy, tôi cũng đau lòng lắm...
Dialogue: 0,0:19:45.49,0:19:46.66,Default,Bucca,0000,0000,0000,,Vui thật.
Dialogue: 0,0:19:46.66,0:19:49.54,Default,Bucca,0000,0000,0000,,Đúng là nữ hoàng, băng giá đến tận trái tim.
Dialogue: 0,0:19:51.58,0:19:55.25,Default,Raven,0000,0000,0000,,Thì ra người mang danh "Bức Tường Phía Bắc Của Briggs" như cô
Dialogue: 0,0:19:55.25,0:19:56.92,Default,Raven,0000,0000,0000,,cũng yếu mềm trước trẻ con à?
Dialogue: 0,0:19:58.71,0:20:03.62,Default,Oli,0000,0000,0000,,Đáng lẽ tầm tuổi tôi đã phải có một hai đứa con rồi,
Dialogue: 0,0:20:03.62,0:20:06.01,Default,Oli,0000,0000,0000,,nhưng tôi hoàn toàn xa lạ với mấy chuyện đó
Dialogue: 0,0:20:06.47,0:20:07.72,Rad,Raven,0000,0000,0000,,Cô nói gì thế?
Dialogue: 0,0:20:07.72,0:20:09.72,Rad,Raven,0000,0000,0000,,Hẳn là có nhiều người theo đuổi cô lắm chứ.
Dialogue: 0,0:20:10.06,0:20:11.02,Rad,Oli,0000,0000,0000,,Không có đâu ạ.
Dialogue: 0,0:20:11.85,0:20:15.52,Default,Oli,0000,0000,0000,,Già đi thật là đáng sợ nhỉ?
Dialogue: 0,0:20:15.98,0:20:18.77,Rad,Oli,0000,0000,0000,,Tôi rất sợ mình bị già đi.
Dialogue: 0,0:20:19.44,0:20:21.81,Default,Oli,0000,0000,0000,,Vũ khí sinh vật đó của Drachma
Dialogue: 0,0:20:21.81,0:20:24.03,Default,Oli,0000,0000,0000,,có một cơ thể thật tuyệt vời.
Dialogue: 0,0:20:25.16,0:20:26.74,Default,Oli,0000,0000,0000,,Một cơ thể bất tử.
Dialogue: 0,0:20:27.37,0:20:29.16,Default,Oli,0000,0000,0000,,Cứ như mơ ấy nhỉ?
Dialogue: 0,0:20:32.41,0:20:34.94,Default,Raven,0000,0000,0000,,Nếu tôi nói rằng không lâu nữa đó sẽ không chỉ là giấc mơ
Dialogue: 0,0:20:34.94,0:20:37.25,Default,Raven,0000,0000,0000,,thì cô nghĩ sao?
Dialogue: 0,0:20:45.18,0:20:46.59,Default,Raven,0000,0000,0000,,Này, Thiếu Tướng...
Dialogue: 0,0:20:47.72,0:20:51.60,Default,Raven,0000,0000,0000,,Cô có hứng thú với quân đội hoàn toàn bất tử không?
Dialogue: 0,0:20:51.85,0:20:53.27,Think,Ed,0000,0000,0000,,Cá mắc câu rồi!
Dialogue: 0,0:20:58.90,0:21:00.57,Default,Nar,0000,0000,0000,,"Phục tùng kẻ mạnh".
Dialogue: 0,0:21:00.57,0:21:02.90,Default,Nar,0000,0000,0000,,Đó là ý nghĩa quy luật của tự nhiên.
Dialogue: 0,0:21:02.90,0:21:05.59,Default,Nar,0000,0000,0000,,Nếu không muốn bị trói buộc bởi những lời ấy,
Dialogue: 0,0:21:05.59,0:21:08.74,Default,Nar,0000,0000,0000,,hãy nắm trong tay sức mạnh lớn hơn.
Dialogue: 0,0:21:08.74,0:21:14.12,Default,Nar,0000,0000,0000,,Bởi vì sẽ có lúc ta phải lấy sức mạnh mà đọ lại sức mạnh.
Dialogue: 0,0:21:14.83,0:21:18.79,Default,Nar,0000,0000,0000,,Lần tới, Cang Giả Kim Thuật Sư - Fullmetal Alchemist:
