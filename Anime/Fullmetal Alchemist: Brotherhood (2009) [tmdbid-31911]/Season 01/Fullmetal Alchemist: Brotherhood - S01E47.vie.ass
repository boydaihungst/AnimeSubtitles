Dialogue: 0,0:00:53.53,0:00:56.53,Credit,Nar,0000,0000,0000,,{\bord3\blur5}Subbed by BLACK - ATeam
Dialogue: 0,0:01:12.38,0:01:14.01,Default,Ed,0000,0000,0000,,Xin hỏi...
Dialogue: 0,0:01:14.01,0:01:15.76,Default,Ed,0000,0000,0000,,Đây có phải Kanama không ạ?
Dialogue: 0,0:01:19.97,0:01:21.06,Default,Guy,0000,0000,0000,,Ông Hoh!
Dialogue: 0,0:01:22.39,0:01:23.52,Default,Guy,0000,0000,0000,,Ông có khách này.
Dialogue: 0,0:01:30.48,0:01:32.48,Default,Hoh,0000,0000,0000,,Con tới rồi à, Edward...
Dialogue: 0,0:01:33.90,0:01:36.45,Default,Ed,0000,0000,0000,,Chà, đã thật.
Dialogue: 0,0:01:36.45,0:01:39.36,Default,Hoh,0000,0000,0000,,Vừa gặp đã đấm bố, con ác thế!?
Dialogue: 0,0:01:39.36,0:01:40.99,Default,Hoh,0000,0000,0000,,Lại còn dùng tay phải nữa!
Dialogue: 0,0:01:42.74,0:01:44.83,Default,Hoh,0000,0000,0000,,Hình như con có vài người bạn mới nhỉ.
Dialogue: 0,0:01:44.83,0:01:45.16,Default,Dar,0000,0000,0000,,Bạn...
Dialogue: 0,0:01:45.16,0:01:48.21,Default,Li,0000,0000,0000,,Bọn tôi chỉ làm việc với nó vì một vài lý do thôi.
Dialogue: 0,0:01:48.21,0:01:50.88,Default,Greed,0000,0000,0000,,Còn ta là sếp của bọn chúng.
Dialogue: 0,0:01:52.38,0:01:54.55,Default,Hoh,0000,0000,0000,,Chà...
Dialogue: 0,0:01:54.55,0:01:57.01,Default,Hoh,0000,0000,0000,,Cảm ơn cậu đã coi chừng thằng con tôi.
Dialogue: 0,0:01:57.01,0:01:58.18,Default,Greed,0000,0000,0000,,Có gì đâu.
Dialogue: 0,0:01:58.18,0:02:00.55,Default,Greed,0000,0000,0000,,Nhưng phải công nhận thằng con ông phiền phức thật.
Dialogue: 0,0:02:00.55,0:02:01.26,Default,Ed,0000,0000,0000,,Im đi!
Dialogue: 0,0:02:02.76,0:02:04.77,Default,Hoh,0000,0000,0000,,Cậu có hình xăm đẹp quá nhỉ.
Dialogue: 0,0:02:06.18,0:02:06.89,Default,Greed,0000,0000,0000,,À.
Dialogue: 0,0:02:07.43,0:02:08.48,Default,Greed,0000,0000,0000,,Cái này...
Dialogue: 0,0:02:09.69,0:02:11.52,Default,Greed,0000,0000,0000,,Có giấu cũng chẳng ích gì.
Dialogue: 0,0:02:13.11,0:02:15.53,Default,Greed,0000,0000,0000,,Ông cũng đừng có mà che giấu gì đấy, bố già.
Dialogue: 0,0:02:19.32,0:02:22.20,Default,Ed,0000,0000,0000,,Ngày mai là "Ngày Hẹn" đúng không?
Dialogue: 0,0:02:25.24,0:02:26.20,Default,Hoh,0000,0000,0000,,Ừ.
Dialogue: 0,0:02:26.91,0:02:28.87,Default,Hoh,0000,0000,0000,,Tôi sẽ nói cho mọi người biết tất cả.
Dialogue: 0,0:02:44.10,0:02:48.93,Default,Hoh,0000,0000,0000,,Có vẻ con không chấp nhận chuyện đó dễ dàng như Alphonse.
Dialogue: 0,0:02:48.93,0:02:50.27,Default,Ed,0000,0000,0000,,Ông nói với cả Al rồi à!?
Dialogue: 0,0:02:51.06,0:02:52.15,Default,Hoh,0000,0000,0000,,Ừ.
Dialogue: 0,0:02:52.15,0:02:56.90,Default,Hoh,0000,0000,0000,,Hình như nó cũng bối rối lắm, nhưng đã chấp nhận sự thật rồi.
Dialogue: 0,0:03:00.86,0:03:03.70,Default,Hoh,0000,0000,0000,,Hòn Đá Triết Gia mà các con tìm kiếm đang ở ngay đây.
Dialogue: 0,0:03:03.70,0:03:04.53,Default,Hoh,0000,0000,0000,,Có muốn dùng không?
Dialogue: 0,0:03:04.78,0:03:06.37,Default,Ed,0000,0000,0000,,Đừng đùa với tôi!
Dialogue: 0,0:03:06.37,0:03:08.62,Default,Ed,0000,0000,0000,,Đó toàn là mạng người vô tội cả!
Dialogue: 0,0:03:08.62,0:03:11.25,Default,Ed,0000,0000,0000,,Bọn tôi mất cơ thể là lỗi của bọn tôi!
Dialogue: 0,0:03:11.25,0:03:12.42,Default,Ed,0000,0000,0000,,Chúng tôi làm gì có quyền sử dụng sinh mạng của họ?
Dialogue: 0,0:03:15.34,0:03:17.67,Default,Hoh,0000,0000,0000,,Thấy con nói được những lời ấy bố vui lắm.
Dialogue: 0,0:03:21.43,0:03:24.26,Default,Hoh,0000,0000,0000,,Ngày mai sẽ xảy ra nhật thực.
Dialogue: 0,0:03:24.26,0:03:26.35,Default,Hoh,0000,0000,0000,,Hắn định lợi dụng hiện tượng ấy.
Dialogue: 0,0:03:26.64,0:03:28.06,Default,Ed,0000,0000,0000,,Nhật thực?
Dialogue: 0,0:03:28.06,0:03:29.35,Default,Ed,0000,0000,0000,,Tại sao hắn lại lợi dụng nó?
Dialogue: 0,0:03:29.98,0:03:31.10,Default,Hoh,0000,0000,0000,,Edward.
Dialogue: 0,0:03:32.02,0:03:35.69,Default,Hoh,0000,0000,0000,,Con có sẵn lòng giúp bố ngăn chặn hắn không?
Dialogue: 0,0:03:35.69,0:03:37.48,Default,Ed,0000,0000,0000,,"Giúp" à?
Dialogue: 0,0:03:37.48,0:03:39.03,Default,Ed,0000,0000,0000,,Đừng có tưởng bở!
Dialogue: 0,0:03:39.03,0:03:43.20,Default,Ed,0000,0000,0000,,Dù không phải làm việc với ông tôi cũng phải đánh bại lão già râu ấy!
Dialogue: 0,0:03:43.49,0:03:47.58,Default,Ed,0000,0000,0000,,Chẳng qua hợp tác với ông sẽ có nhiều cơ hội thắng hơn nên tôi mới
Dialogue: 0,0:03:47.58,0:03:48.91,Default,Ed,0000,0000,0000,,ngồi nghe mấy lời lảm nhảm của ông thôi!
Dialogue: 0,0:03:56.75,0:03:58.42,Default,Hoh,0000,0000,0000,,Vậy thì tốt...
Dialogue: 0,0:03:58.42,0:04:02.72,Default,Hoh,0000,0000,0000,,Bất kể lý do là gì đi nữa, con vẫn muốn chiến đấu cùng bố.
Dialogue: 0,0:04:08.72,0:04:12.43,Default,Ed,0000,0000,0000,,Bà Pinako bảo tôi chuyển cho ông di ngôn của mẹ.
Dialogue: 0,0:04:16.48,0:04:18.65,Default,Ed,0000,0000,0000,,"Xin lỗi, em không thể giữ lời hứa với anh rồi."
Dialogue: 0,0:04:20.19,0:04:21.74,Default,Ed,0000,0000,0000,,"Em phải đi trước đây."
Dialogue: 0,0:04:28.20,0:04:29.87,Default,Ed,0000,0000,0000,,Xong rồi đấy!
Dialogue: 0,0:04:47.64,0:04:52.81,Default,Hei,0000,0000,0000,,Này, sao cậu không thử ngồi nói chuyện thân mật, cởi mở với bố mình?
Dialogue: 0,0:04:52.81,0:04:54.02,Default,Dar,0000,0000,0000,,Phải đấy.
Dialogue: 0,0:04:54.02,0:04:55.89,Default,Dar,0000,0000,0000,,Ít ra cũng phải gọi ông ấy là bố chứ.
Dialogue: 0,0:04:56.52,0:04:58.86,Default,Hei,0000,0000,0000,,Tuy trong quá khứ đã xảy ra nhiều chuyện,
Dialogue: 0,0:04:58.86,0:05:02.03,Default,Hei,0000,0000,0000,,nhưng chắc chắn ông ấy không phải loại bỏ rơi vợ con đâu.
Dialogue: 0,0:05:02.69,0:05:05.03,Default,Dar,0000,0000,0000,,Chắc là ông ấy cũng có nhiều lý do khó nói.
Dialogue: 0,0:05:05.03,0:05:07.70,Default,Dar,0000,0000,0000,,Thôi nào, nghe lời ông ấy nói đi.
Dialogue: 0,0:05:07.70,0:05:09.66,Default,Ed,0000,0000,0000,,Im đi cho tôi nhờ!
Dialogue: 0,0:05:09.66,0:05:11.91,Default,Ed,0000,0000,0000,,Tôi cũng có nhiều lý do khó nói lắm đấy ạ!
Dialogue: 0,0:05:11.91,0:05:13.50,Default,Hei,0000,0000,0000,,Ví dụ?
Dialogue: 0,0:05:13.50,0:05:15.37,Default,Dar,0000,0000,0000,,Chẳng qua cậu vừa kiêu vừa cứng đầu thôi.
Dialogue: 0,0:05:17.17,0:05:19.58,Default,Greed,0000,0000,0000,,Ngươi không giỏi biểu lộ cảm xúc lắm nhỉ?
Dialogue: 0,0:05:20.71,0:05:22.13,Default,Greed,0000,0000,0000,,Cũng khó trách được.
Dialogue: 0,0:05:22.13,0:05:25.30,Default,Greed,0000,0000,0000,,Ông ta là một Hòn Đá Triết Gia trong hình dạng con người.
Dialogue: 0,0:05:25.30,0:05:28.97,Default,Greed,0000,0000,0000,,Đã thế lại còn là bố ngươi nữa.
Dialogue: 0,0:05:29.76,0:05:31.47,Default,Ed,0000,0000,0000,,Không phải chỉ có như thế.
Dialogue: 0,0:05:33.77,0:05:36.98,Default,Ed,0000,0000,0000,,Ông ta vừa khiến tôi rất bất ngờ.
Dialogue: 0,0:05:47.61,0:05:51.66,Think,Tri,0000,0000,0000,,Sẽ có ngày em trở thành một bà lão nhăn nheo xấu như quái vật.
Dialogue: 0,0:05:52.58,0:05:55.56,Think,Tri,0000,0000,0000,,Nhưng dù trông em có như thế nào,
Dialogue: 0,0:05:55.56,0:05:57.62,Think,Tri,0000,0000,0000,,em vẫn muốn cùng cả gia đình cười thật tươi.
Dialogue: 0,0:05:58.17,0:06:00.46,Think,Tri,0000,0000,0000,,Vì thế, anh hãy mãi ở bên gia đình mình nhé.
Dialogue: 0,0:06:01.92,0:06:04.88,Think,Hoh,0000,0000,0000,,Trisha, anh phải đi đây.
Dialogue: 0,0:06:05.76,0:06:07.17,Think,Hoh,0000,0000,0000,,Hãy chờ anh nhé.
Dialogue: 0,0:06:15.52,0:06:16.27,Think,Tri,0000,0000,0000,,Vâng.
Dialogue: 0,0:06:20.73,0:06:22.11,Think,Tri,0000,0000,0000,,Em sẽ chờ anh.
Dialogue: 0,0:06:28.11,0:06:31.91,Default,Hoh,0000,0000,0000,,"Xin lỗi, em không thể giữ lời hứa với anh rồi."
Dialogue: 0,0:06:33.37,0:06:35.33,Default,Hoh,0000,0000,0000,,"Em phải đi trước đây."...
Dialogue: 0,0:06:37.12,0:06:40.33,Default,Hoh,0000,0000,0000,,Dù chúng ta không thể bên nhau tới lúc đầu bạc răng long,
Dialogue: 0,0:06:40.92,0:06:45.67,Default,Hoh,0000,0000,0000,,em vẫn luôn tin rằng anh nhất định sẽ theo em.
Dialogue: 0,0:06:49.55,0:06:52.34,Default,Hoh,0000,0000,0000,,Nốt ngày mai nữa thôi, Trisha.
Dialogue: 0,0:06:56.47,0:06:57.97,Default,Woman,0000,0000,0000,,Vải của cậu đây.
Dialogue: 0,0:06:57.97,0:06:59.56,Default,Ed,0000,0000,0000,,Cảm ơn.
Dialogue: 0,0:06:59.56,0:07:01.52,Default,Greed,0000,0000,0000,,Ngươi định làm gì với nó?
Dialogue: 0,0:07:10.90,0:07:13.32,Default,Hei,0000,0000,0000,,Lại định mặc cái thứ lòe loẹt này hả?
Dialogue: 0,0:07:13.32,0:07:15.03,Default,Greed,0000,0000,0000,,Tại sao lại phải là màu đỏ chứ?
Dialogue: 0,0:07:19.58,0:07:23.50,Default,Ed,0000,0000,0000,,Có lẽ đây sẽ là trận chiến cuối cùng của ta với chúng.
Dialogue: 0,0:07:24.38,0:07:26.17,Default,Ed,0000,0000,0000,,Tôi muốn lên tinh thần một chút.
Dialogue: 0,0:07:30.51,0:07:31.97,Default,Ed,0000,0000,0000,,Mà này...
Dialogue: 0,0:07:31.97,0:07:35.43,Default,Ed,0000,0000,0000,,Các ông không cần phải đi theo tôi làm gì đâu.
Dialogue: 0,0:07:35.43,0:07:39.47,Default,Ed,0000,0000,0000,,Tôi nghĩ mọi người nên đi lo chuyện của riêng mình thì hơn đấy.
Dialogue: 0,0:07:39.81,0:07:43.35,Default,Greed,0000,0000,0000,,Này, ngươi là thuộc hạ của ta đấy, đừng có ra lệnh cho ta.
Dialogue: 0,0:07:43.35,0:07:47.23,Default,Ed,0000,0000,0000,,Các ông cũng muốn lấy lại cơ thể bình thường lắm nhỉ?
Dialogue: 0,0:07:47.23,0:07:48.65,Default,Hei,0000,0000,0000,,Tôi cũng không biết...
Dialogue: 0,0:07:48.65,0:07:50.93,Default,Dar,0000,0000,0000,,Cơ thể này cũng tiện lợi lắm,
Dialogue: 0,0:07:50.96,0:07:53.36,Default,Dar,0000,0000,0000,,nếu phải mãi mãi như thế này chắc tôi cũng chẳng phiền gì.
Dialogue: 0,0:07:54.78,0:07:56.12,Default,Greed,0000,0000,0000,,Phải thế chứ!
Dialogue: 0,0:07:57.03,0:07:58.49,Default,Ed,0000,0000,0000,,Vậy thì... tại sao?
Dialogue: 0,0:07:58.79,0:08:00.54,Default,Hei,0000,0000,0000,,À, chẳng qua là...
Dialogue: 0,0:08:00.54,0:08:02.37,Default,Hei,0000,0000,0000,,Bọn tôi cũng chẳng biết phải đi đâu.
Dialogue: 0,0:08:02.37,0:08:07.00,Default,Dar,0000,0000,0000,,Trực giác dã thú của tôi nói rằng nên ở lại đây.
Dialogue: 0,0:08:07.29,0:08:08.63,Default,Ed,0000,0000,0000,,Thế hả...
Dialogue: 0,0:08:09.88,0:08:11.97,Default,Ed,0000,0000,0000,,Còn anh?
Dialogue: 0,0:08:11.97,0:08:15.64,Default,Ed,0000,0000,0000,,Anh nói mình đang chạy trốn các Homunculus khác mà?
Dialogue: 0,0:08:16.47,0:08:19.64,Default,Greed,0000,0000,0000,,Ngươi hỏi tại sao ta quay lại Central ấy hả?
Dialogue: 0,0:08:20.18,0:08:21.64,Default,Greed,0000,0000,0000,,Không nói đâu.
Dialogue: 0,0:08:29.65,0:08:31.07,Default,Ed,0000,0000,0000,,Sao thế?
Dialogue: 0,0:08:43.37,0:08:44.41,Default,Ed,0000,0000,0000,,Al!
Dialogue: 0,0:08:45.46,0:08:47.63,Default,Ed,0000,0000,0000,,Thật là, đừng có hù anh như thế chứ!
Dialogue: 0,0:08:48.75,0:08:50.46,Default,Ed,0000,0000,0000,,May mà gặp được em rồi!
Dialogue: 0,0:08:50.46,0:08:51.59,Default,Ed,0000,0000,0000,,Dạo này em thế nào?
Dialogue: 0,0:08:51.59,0:08:54.26,Default,Al,0000,0000,0000,,Anh chắc cũng ổn cả chứ nhỉ.
Dialogue: 0,0:08:54.26,0:08:57.76,Default,Ed,0000,0000,0000,,Ơ? Em đang đi cùng với Thiếu Tá Miles mà?
Dialogue: 0,0:08:58.18,0:09:00.01,Default,Ed,0000,0000,0000,,Chuyện ở bên đó ổn cả chứ?
Dialogue: 0,0:09:00.43,0:09:02.31,Default,Al,0000,0000,0000,,Em đang định nói với anh về chuyện đó.
Dialogue: 0,0:09:02.31,0:09:03.48,Default,Al,0000,0000,0000,,Anh lại đây được không?
Dialogue: 0,0:09:03.48,0:09:04.85,Default,Ed,0000,0000,0000,,Ừ.
Dialogue: 0,0:09:07.85,0:09:10.27,Default,Ed,0000,0000,0000,,Al... em có bị làm sao không thế?
Dialogue: 0,0:09:14.11,0:09:15.70,Default,Al,0000,0000,0000,,Tại sao anh lại hỏi thế?
Dialogue: 0,0:09:15.70,0:09:17.95,Default,Ed,0000,0000,0000,,Anh không biết... chỉ là cảm giác thôi.
Dialogue: 0,0:09:17.95,0:09:18.99,Default,Greed,0000,0000,0000,,Ed!
Dialogue: 0,0:09:19.57,0:09:20.45,Default,Ed,0000,0000,0000,,Ling!
Dialogue: 0,0:09:20.45,0:09:21.87,Default,Lin,0000,0000,0000,,Mau tránh xa hắn ra!
Dialogue: 0,0:09:23.37,0:09:24.25,Default,Lin,0000,0000,0000,,Hắn là...
Dialogue: 0,0:09:26.29,0:09:27.75,Default,Lin,0000,0000,0000,,Đó là...
Dialogue: 0,0:09:41.43,0:09:43.27,Default,Ed,0000,0000,0000,,Cái quái gì thế!?
Dialogue: 0,0:09:43.89,0:09:48.14,Default,Pride,0000,0000,0000,,Ngươi nhập bọn với chúng rồi hả, Greed.
Dialogue: 0,0:09:55.82,0:09:59.24,Default,Pride,0000,0000,0000,,Đã thế lại còn bị linh hồn con người điều khiển...
Dialogue: 0,0:10:01.78,0:10:03.99,Default,Pride,0000,0000,0000,,Linh hồn của ngươi quá yếu!
Dialogue: 0,0:10:14.55,0:10:17.17,Default,Miles,0000,0000,0000,,Tổng thống vẫn đang mất tích à?
Dialogue: 0,0:10:17.17,0:10:21.39,Default,Grumm,0000,0000,0000,,Người ta chỉ tìm thấy xác của một tên thuộc hạ của hắn ở dưới sông.
Dialogue: 0,0:10:21.39,0:10:24.31,Default,Miles,0000,0000,0000,,Hắn mà sống được thì cũng tài đấy.
Dialogue: 0,0:10:24.31,0:10:30.06,Default,Grumm,0000,0000,0000,,Tôi sẽ chỉ huy đội tìm kiếm và nhờ quân miền Bắc giúp một tay.
Dialogue: 0,0:10:30.06,0:10:31.81,Default,Miles,0000,0000,0000,,Ngài định đích thân ra tiền tuyến sao?
Dialogue: 0,0:10:32.40,0:10:37.07,Default,Grumm,0000,0000,0000,,Tôi không thể nằm yên khi chưa tận mắt thấy xác của hắn.
Dialogue: 0,0:10:37.78,0:10:41.49,Default,Miles,0000,0000,0000,,Ngài không định tấn công Central như đã định sao?
Dialogue: 0,0:10:41.49,0:10:43.24,Default,Grumm,0000,0000,0000,,Biết làm thế nào được.
Dialogue: 0,0:10:43.24,0:10:47.58,Default,Grumm,0000,0000,0000,,Tôi đành để Đại Tá Mustang giành phần béo bở hơn thôi.
Dialogue: 0,0:10:48.87,0:10:53.59,Think,Grumm,0000,0000,0000,,Lúc này chính quyền Bradley không hề có vấn đề gì đáng phàn nàn cả.
Dialogue: 0,0:10:54.25,0:11:00.38,Think,Grumm,0000,0000,0000,,Nếu Đại Tá Mustang và Thiếu Tướng Armstrong tiến hành kế hoạch,
Dialogue: 0,0:11:00.38,0:11:02.80,Think,Grumm,0000,0000,0000,,bọn họ sẽ bị coi là kẻ phản nghịch.
Dialogue: 0,0:11:02.80,0:11:06.60,Think,Grumm,0000,0000,0000,,Khi đó sẽ là lúc ta tỏa sáng.
Dialogue: 0,0:11:07.68,0:11:10.44,Think,Grumm,0000,0000,0000,,Khi họ trở thành kẻ xấu trong mắt người dân,
Dialogue: 0,0:11:10.44,0:11:15.11,Think,Grumm,0000,0000,0000,,anh hùng chính nghĩa, Trung Tướng Grumman ta đây sẽ xuất hiện.
Dialogue: 0,0:11:15.90,0:11:20.57,Think,Grumm,0000,0000,0000,,Nếu muốn lên đỉnh cao của đất nước với mức rủi ro thấp nhất,
Dialogue: 0,0:11:20.57,0:11:24.49,Think,Grumm,0000,0000,0000,,ta chỉ còn cách để cho cánh trẻ tuổi chịu phần thiệt thôi.
Dialogue: 0,0:11:25.37,0:11:29.62,Think,Miles,0000,0000,0000,,Chắc lão cáo già này đang nghĩ vậy đấy.
Dialogue: 0,0:11:31.83,0:11:35.25,Think,Miles,0000,0000,0000,,Mình phải hợp tác với lão vì Ngày Hẹn đã tới gần rồi,
Dialogue: 0,0:11:36.25,0:11:38.59,Think,Miles,0000,0000,0000,,nhưng cho tới phút cuối cũng quyết không thể lơ là cảnh giác.
Dialogue: 0,0:11:48.93,0:11:50.89,Default,Ed,0000,0000,0000,,A-Al...
Dialogue: 0,0:11:50.89,0:11:51.98,Default,Greed,0000,0000,0000,,Pride đấy.
Dialogue: 0,0:11:52.81,0:11:54.10,Default,Ed,0000,0000,0000,,"Pride"?
Dialogue: 0,0:11:54.10,0:11:55.69,Default,Greed,0000,0000,0000,,Ừ.
Dialogue: 0,0:11:55.69,0:11:59.48,Default,Greed,0000,0000,0000,,Hắn cũng gần như là anh cả của bọn ta vậy.
Dialogue: 0,0:12:00.53,0:12:01.99,Default,Ed,0000,0000,0000,,Homunculus ư?
Dialogue: 0,0:12:03.82,0:12:07.33,Default,Pride,0000,0000,0000,,Ngươi nhất định muốn phản bội chúng ta sao, Greed?
Dialogue: 0,0:12:08.12,0:12:12.25,Default,Pride,0000,0000,0000,,Vậy đã tới nước này rồi thì ngươi chỉ còn là cái gai trong mắt.
Dialogue: 0,0:12:12.25,0:12:13.62,Default,Greed,0000,0000,0000,,Tên khốn...
Dialogue: 0,0:12:13.62,0:12:15.33,Default,Greed,0000,0000,0000,,Tại sao ngươi biết bọn ta ở đây!?
Dialogue: 0,0:12:17.13,0:12:20.51,Default,Ed,0000,0000,0000,,Sao ngươi dám cải trang thành Al!
Dialogue: 0,0:12:20.51,0:12:22.59,Default,Pride,0000,0000,0000,,Ta đâu có cải trang gì.
Dialogue: 0,0:12:25.01,0:12:28.14,Default,Pride,0000,0000,0000,,Đây đúng là cơ thể của em trai ngươi đó.
Dialogue: 0,0:12:32.98,0:12:34.77,Default,Ed,0000,0000,0000,,Tên khốn!
Dialogue: 0,0:12:35.52,0:12:38.82,Default,Pride,0000,0000,0000,,Ta sẽ giết chết Greed ngay tại đây, ngay bây giờ.
Dialogue: 0,0:12:38.82,0:12:42.44,Default,Pride,0000,0000,0000,,Sau đó, ta muốn Cang Giả Kim Thuật Sư đi cùng với ta.
Dialogue: 0,0:12:45.03,0:12:47.41,Default,Ed,0000,0000,0000,,Này, hai người mau trốn đi...
Dialogue: 0,0:12:47.41,0:12:49.74,Default,Ed,0000,0000,0000,,Này, hai ông nhanh quá đấy!
Dialogue: 0,0:12:49.74,0:12:53.29,Default,Dar,0000,0000,0000,,Bản năng dã thú mách cho chúng tôi là không nên đánh nhau với nó!
Dialogue: 0,0:12:55.37,0:12:56.92,Default,Hei,0000,0000,0000,,Cậu sẽ không sao chứ?
Dialogue: 0,0:12:57.38,0:12:59.13,Default,Ed,0000,0000,0000,,Đương nhiên rồi.
Dialogue: 0,0:12:59.13,0:13:01.84,Default,Ed,0000,0000,0000,,Chúng không thể giết Al và tôi vì vẫn cần gì đó ở bọn tôi.
Dialogue: 0,0:13:02.21,0:13:05.30,Default,Ed,0000,0000,0000,,Nhưng ngược lại, tôi có thể ra tay thoải mái!
Dialogue: 0,0:13:05.30,0:13:07.14,Default,Ed,0000,0000,0000,,Ta sẽ không nương tay đâu!
Dialogue: 0,0:13:07.97,0:13:10.81,Default,Pride,0000,0000,0000,,Đúng vậy, ta không thể giết ngươi.
Dialogue: 0,0:13:11.35,0:13:15.39,Default,Pride,0000,0000,0000,,Nhưng ta cũng không đảm bảo ngươi được chân tay lành lặn đâu.
Dialogue: 0,0:13:22.78,0:13:25.28,Default,Ed,0000,0000,0000,,Không thể chạy về phía khu ổ chuột được!
Dialogue: 0,0:13:32.95,0:13:35.58,Default,Greed,0000,0000,0000,,Đấu với tên này khó phòng thủ lắm!
Dialogue: 0,0:13:37.33,0:13:38.54,Think,Greed,0000,0000,0000,,Tí thì chết!
Dialogue: 0,0:13:43.46,0:13:47.22,Default,Pride,0000,0000,0000,,Đó, ta đã bắt được bạn của ngươi rồi.
Dialogue: 0,0:13:47.22,0:13:52.76,Default,Pride,0000,0000,0000,,Có cần ta bắt hết đám dân khu ổ chuột để ép ngươi hợp tác với ta không?
Dialogue: 0,0:13:54.06,0:13:55.68,Default,Greed,0000,0000,0000,,Khá thật.
Dialogue: 0,0:13:55.68,0:13:58.85,Default,Greed,0000,0000,0000,,Hắn đánh trúng điểm yếu của ngươi rồi.
Dialogue: 0,0:14:12.99,0:14:16.50,Default,Ed,0000,0000,0000,,Không phải lúc nào ta cũng chịu ở thế bí đâu.
Dialogue: 0,0:14:35.89,0:14:36.77,Default,Guy,0000,0000,0000,,Gì vậy?
Dialogue: 0,0:14:36.77,0:14:37.43,Default,Girl,0000,0000,0000,,Mất điện à?
Dialogue: 0,0:14:37.43,0:14:38.85,Default,Guy,0000,0000,0000,,Chuyện gì thế?
Dialogue: 0,0:14:45.98,0:14:48.07,Think,Ed,0000,0000,0000,,Mình không thấy gì cả,
Dialogue: 0,0:14:48.07,0:14:49.61,Think,Ed,0000,0000,0000,,nhưng những con mắt ấy cũng biến mất.
Dialogue: 0,0:14:52.53,0:14:53.62,Default,Hei,0000,0000,0000,,Greed!
Dialogue: 0,0:14:53.62,0:14:54.74,Default,Greed,0000,0000,0000,,Ông đấy à, Heinkel?
Dialogue: 0,0:14:55.16,0:14:56.12,Default,Hei,0000,0000,0000,,Sao thế?
Dialogue: 0,0:14:56.12,0:14:57.50,Default,Hei,0000,0000,0000,,Chuyện gì vừa xảy ra vậy?
Dialogue: 0,0:14:57.50,0:15:00.58,Default,Greed,0000,0000,0000,,Phải có ánh sáng thì mới có bóng.
Dialogue: 0,0:15:00.58,0:15:03.00,Default,Greed,0000,0000,0000,,Cơ thể hắn không thể tồn tại trong bóng tối,
Dialogue: 0,0:15:03.00,0:15:05.67,Default,Greed,0000,0000,0000,,và hắn cũng không thể nhìn thấy gì như chúng ta.
Dialogue: 0,0:15:06.17,0:15:07.67,Default,Hei,0000,0000,0000,,Hắn đi rồi sao?
Dialogue: 0,0:15:07.67,0:15:09.84,Default,Greed,0000,0000,0000,,Hắn chỉ đang trốn ở đâu đó thôi.
Dialogue: 0,0:15:09.84,0:15:12.39,Default,Greed,0000,0000,0000,,Chỉ cần có ánh sáng là hắn sẽ trở lại...
Dialogue: 0,0:15:13.14,0:15:14.72,Default,Dar,0000,0000,0000,,Vậy ta phải làm gì đây?
Dialogue: 0,0:15:15.76,0:15:19.18,Default,Greed,0000,0000,0000,,Heinkel... ông có thấy cái bóng của Alphonse lúc nãy không?
Dialogue: 0,0:15:19.18,0:15:20.23,Default,Hei,0000,0000,0000,,Có.
Dialogue: 0,0:15:20.23,0:15:22.52,Default,Hei,0000,0000,0000,,Có rất nhiều cánh tay bò quanh nó.
Dialogue: 0,0:15:22.52,0:15:23.56,Default,Greed,0000,0000,0000,,Không phải.
Dialogue: 0,0:15:23.98,0:15:26.82,Default,Greed,0000,0000,0000,,Nó lúc nào cũng đứng ở gần một cái bóng lớn, đúng không?
Dialogue: 0,0:15:27.82,0:15:30.32,Default,Greed,0000,0000,0000,,Cơ thể thực của Pride đang ở đâu đó trong bóng tối của rừng.
Dialogue: 0,0:15:30.78,0:15:31.78,Default,Hei,0000,0000,0000,,Cơ thể thực ư?
Dialogue: 0,0:15:32.45,0:15:34.41,Default,Hei,0000,0000,0000,,Vậy nó không ở trong áo giáp của Al à!?
Dialogue: 0,0:15:34.41,0:15:35.95,Default,Greed,0000,0000,0000,,Không.
Dialogue: 0,0:15:35.95,0:15:39.66,Default,Greed,0000,0000,0000,,Đó chỉ là cái vỏ khi hắn cần di chuyển thôi.
Dialogue: 0,0:15:40.46,0:15:41.96,Default,Hei,0000,0000,0000,,"Vỏ" là như thế nào?
Dialogue: 0,0:15:49.42,0:15:51.80,Think,Pride,0000,0000,0000,,Trời không trăng cũng chẳng có sao...
Dialogue: 0,0:15:52.84,0:15:56.22,Think,Pride,0000,0000,0000,,Chúng cũng không thể hành động trong màn đêm được.
Dialogue: 0,0:15:56.93,0:15:59.43,Think,Pride,0000,0000,0000,,Chắc mình cứ chờ cho đến khi khu ổ chuột có điện trở lại...
Dialogue: 0,0:16:05.98,0:16:07.44,Default,Hei,0000,0000,0000,,Đừng hòng thoát!
Dialogue: 0,0:16:10.36,0:16:13.70,Default,Pride,0000,0000,0000,,Bề ngoài trẻ con của ta không khiến ngươi nương tay hả.
Dialogue: 0,0:16:13.70,0:16:14.91,Default,Pride,0000,0000,0000,,Khá lắm.
Dialogue: 0,0:16:14.91,0:16:18.53,Default,Hei,0000,0000,0000,,Ngươi nói đúng, ta cũng chẳng thích thú gì việc đánh giết trẻ con!
Dialogue: 0,0:16:20.20,0:16:22.04,Default,Hei,0000,0000,0000,,Nhưng mà,
Dialogue: 0,0:16:22.04,0:16:24.42,Default,Hei,0000,0000,0000,,bản năng dã thú của ta đang áp đảo lương tâm!
Dialogue: 0,0:16:24.87,0:16:28.00,Default,Hei,0000,0000,0000,,Nó bảo rằng ta phải giết ngươi ngay lập tức!
Dialogue: 0,0:16:32.26,0:16:33.01,Default,Dar,0000,0000,0000,,Ed!
Dialogue: 0,0:16:34.09,0:16:34.93,Default,Dar,0000,0000,0000,,Này, Ed!
Dialogue: 0,0:16:35.55,0:16:36.55,Default,Ed,0000,0000,0000,,Ông Khỉ Đột đấy à?
Dialogue: 0,0:16:37.64,0:16:39.06,Default,Dar,0000,0000,0000,,Em trai cậu sao rồi?
Dialogue: 0,0:16:39.06,0:16:40.97,Default,Ed,0000,0000,0000,,Nó không cử động gì cả.
Dialogue: 0,0:16:40.97,0:16:43.18,Default,Ed,0000,0000,0000,,Nếu nó cử động là mình nghe thấy ngay.
Dialogue: 0,0:16:43.69,0:16:46.31,Default,Dar,0000,0000,0000,,Được, tạm thời rời khỏi đây đã.
Dialogue: 0,0:16:46.31,0:16:47.90,Default,Ed,0000,0000,0000,,Ông bảo tôi phải bỏ rơi Al sao?
Dialogue: 0,0:16:48.27,0:16:50.57,Default,Dar,0000,0000,0000,,Tôi biết cậu đang rất lo,
Dialogue: 0,0:16:50.57,0:16:52.90,Default,Dar,0000,0000,0000,,nhưng nhỡ mình cứ xông bừa vào để rồi dính bẫy thì sao?
Dialogue: 0,0:16:53.86,0:16:56.51,Default,Dar,0000,0000,0000,,Nếu không muốn lâm vào cảnh quân ta đánh quân mình,
Dialogue: 0,0:16:56.51,0:16:59.62,Default,Dar,0000,0000,0000,,chúng ta phải cùng nhau đợi Heinkel giải quyết xong Pride đã.
Dialogue: 0,0:17:03.25,0:17:07.24,Default,Ed,0000,0000,0000,,Tiếng động đó... là ông sư tử đang đánh nhau hả?
Dialogue: 0,0:17:07.38,0:17:11.38,Default,Dar,0000,0000,0000,,Hãy để vụ này cho thú săn đêm lo liệu.
Dialogue: 0,0:17:14.55,0:17:16.05,Think,Greed,0000,0000,0000,,Pride khốn kiếp...
Dialogue: 0,0:17:16.05,0:17:18.76,Think,Greed,0000,0000,0000,,Tại sao hắn biết chúng ta ở đây?
Dialogue: 0,0:17:18.76,0:17:21.01,Think,Greed,0000,0000,0000,,Đó đâu phải là năng lực của hắn...
Dialogue: 0,0:17:26.77,0:17:27.27,Default,Dar,0000,0000,0000,,Cúi mau!
Dialogue: 0,0:17:39.62,0:17:42.87,Default,Glut,0000,0000,0000,,Mùi của Cang Giả Kim Thuật Sư.
Dialogue: 0,0:17:42.87,0:17:44.79,Default,Glut,0000,0000,0000,,Mùi của Greed.
Dialogue: 0,0:17:44.79,0:17:47.00,Default,Greed,0000,0000,0000,,Giọng nói này... là Gluttony?
Dialogue: 0,0:17:47.00,0:17:48.17,Default,Ed,0000,0000,0000,,Hắn ư?
Dialogue: 0,0:17:48.17,0:17:49.71,Default,Greed,0000,0000,0000,,Ra là vậy.
Dialogue: 0,0:17:49.71,0:17:54.05,Default,Greed,0000,0000,0000,,Hắn dùng khứu giác cực nhạy của Gluttony để tìm chúng ta.
Dialogue: 0,0:17:54.46,0:17:59.68,Default,Glut,0000,0000,0000,,Có cả mùi của một tên lạ mặt nữa!
Dialogue: 0,0:17:59.68,0:18:01.60,Default,Glut,0000,0000,0000,,Tôi có thể ăn hắn đúng không?
Dialogue: 0,0:18:02.01,0:18:04.31,Default,Greed,0000,0000,0000,,Hắn đang nói ông đó, Darius.
Dialogue: 0,0:18:04.31,0:18:06.39,Default,Greed,0000,0000,0000,,Hắn cũng là Homunculus.
Dialogue: 0,0:18:06.39,0:18:08.60,Default,Dar,0000,0000,0000,,Sao mà tôi đánh lại đồ quái vật đó được?
Dialogue: 0,0:18:09.27,0:18:12.48,Default,Greed,0000,0000,0000,,Hắn chỉ đi theo mùi thôi mà.
Dialogue: 0,0:18:13.48,0:18:16.74,Default,Greed,0000,0000,0000,,Như vậy là hai người ngang tài ngang sức rồi còn gì.
Dialogue: 0,0:18:16.74,0:18:20.49,Default,Dar,0000,0000,0000,,Bản năng dã thú mách bảo tôi không nên làm thế này, nhưng...
Dialogue: 0,0:18:21.99,0:18:24.08,Default,Dar,0000,0000,0000,,Đàn ông là phải có dũng khí!
Dialogue: 0,0:18:24.08,0:18:25.75,Default,Dar,0000,0000,0000,,Tiên hạ thủ vi cường!
Dialogue: 0,0:18:33.17,0:18:35.92,Default,Dar,0000,0000,0000,,Thêm đòn nữa!
Dialogue: 0,0:18:37.92,0:18:40.13,Default,Ed,0000,0000,0000,,Đồ khỉ đột chết tiệt...
Dialogue: 0,0:18:40.13,0:18:43.97,Default,Ed,0000,0000,0000,,Ông bảo để tránh đánh nhầm quân mình thì chúng ta phải ở gần mà...
Dialogue: 0,0:18:43.97,0:18:44.68,Default,Dar,0000,0000,0000,,Xin lỗi.
Dialogue: 0,0:18:45.31,0:18:49.31,Think,Greed,0000,0000,0000,,Quả nhiên là Gluttony vẫn có lợi thế trong bóng đêm.
Dialogue: 0,0:18:49.31,0:18:51.98,Think,Greed,0000,0000,0000,,Nhưng nếu bật đèn lên, Pride sẽ...
Dialogue: 0,0:18:52.94,0:18:54.69,Think,Greed,0000,0000,0000,,Phiền rồi đây.
Dialogue: 0,0:18:55.36,0:18:56.69,Think,Lin,0000,0000,0000,,Này, Greed.
Dialogue: 0,0:18:57.19,0:18:57.99,Default,Greed,0000,0000,0000,,Ling à?
Dialogue: 0,0:18:58.65,0:18:59.82,Default,Lin,0000,0000,0000,,Đổi chỗ cho tôi một lát.
Dialogue: 0,0:19:00.40,0:19:03.91,Default,Lin,0000,0000,0000,,Tôi có thể cảm nhận khí của Homunculus.
Dialogue: 0,0:19:03.91,0:19:06.08,Think,Lin,0000,0000,0000,,Tôi cũng là người nhận ra Pride đúng không nào?
Dialogue: 0,0:19:06.62,0:19:09.71,Think,Lin,0000,0000,0000,,Tôi chiến đấu trong bóng tối tốt hơn ông.
Dialogue: 0,0:19:13.17,0:19:14.25,Default,Greed,0000,0000,0000,,Không còn cách nào khác!
Dialogue: 0,0:19:14.25,0:19:16.75,Default,Greed,0000,0000,0000,,Đừng có lấy luôn cơ thể này rồi bỏ trốn đó!
Dialogue: 0,0:19:16.75,0:19:17.76,Default,Lin,0000,0000,0000,,Đùa đấy hả!
Dialogue: 0,0:19:17.76,0:19:19.05,Default,Lin,0000,0000,0000,,Đây từ đầu vốn là cơ thể của tôi cơ mà!
Dialogue: 0,0:19:19.05,0:19:21.68,Default,Glut,0000,0000,0000,,Xơi thôi xơi thôi...
Dialogue: 0,0:19:21.68,0:19:22.93,Default,Lin,0000,0000,0000,,Đây rồi!
Dialogue: 0,0:19:27.81,0:19:29.64,Default,Greed,0000,0000,0000,,Đánh hay lắm!
Dialogue: 0,0:19:29.64,0:19:31.52,Default,Greed,0000,0000,0000,,May mà có ngươi làm đồng đội!
Dialogue: 0,0:19:31.52,0:19:32.27,Default,Lin,0000,0000,0000,,Cảm ơn!
Dialogue: 0,0:19:32.69,0:19:33.60,Default,Ed,0000,0000,0000,,Ling à?
Dialogue: 0,0:19:33.60,0:19:33.98,Default,Lin,0000,0000,0000,,Ừ!
Dialogue: 0,0:19:34.90,0:19:36.77,Default,Glut,0000,0000,0000,,Tức quá đi mất!
Dialogue: 0,0:19:36.77,0:19:38.28,Default,Glut,0000,0000,0000,,Lại còn đói nữa!
Dialogue: 0,0:19:38.28,0:19:41.24,Default,Glut,0000,0000,0000,,Nhưng các người không cho ta ăn!
Dialogue: 0,0:19:41.70,0:19:42.95,Default,Glut,0000,0000,0000,,Thế thì...
Dialogue: 0,0:19:42.95,0:19:45.99,Default,Glut,0000,0000,0000,,phải nuốt hết tất cả thôi!
Dialogue: 0,0:19:46.28,0:19:47.62,Default,Dar,0000,0000,0000,,Tôi có linh cảm xấu!
Dialogue: 0,0:19:47.62,0:19:48.74,Default,Ed,0000,0000,0000,,"Xấu" là thế nào?
Dialogue: 0,0:19:49.00,0:19:50.20,Default,Lin,0000,0000,0000,,Có cái gì đó sắp tới.
Dialogue: 0,0:19:50.20,0:19:51.62,Default,Ed,0000,0000,0000,,"Cái gì" là cái gì!?
Dialogue: 0,0:19:51.96,0:19:54.00,Default,Lin,0000,0000,0000,,Cái này... giống như lúc đó!
Dialogue: 0,0:19:54.00,0:19:54.88,Default,Ed,0000,0000,0000,,Này này này!
Dialogue: 0,0:19:54.88,0:19:57.00,Default,Ed,0000,0000,0000,,Các người đang nhìn thấy cái gì vậy hả?
Dialogue: 0,0:19:57.00,0:19:59.38,Default,Ed,0000,0000,0000,,Tôi chỉ là người thường thôi, giải thích cho tôi với!
Dialogue: 0,0:20:10.68,0:20:11.56,Default,Ed,0000,0000,0000,,Cái gì vậy?
Dialogue: 0,0:20:12.14,0:20:13.06,Default,Dar,0000,0000,0000,,Đứng im!
Dialogue: 0,0:20:16.06,0:20:17.98,Default,Ed,0000,0000,0000,,Có người khác tới à?
Dialogue: 0,0:20:17.98,0:20:18.65,Default,Lin,0000,0000,0000,,Tôi không biết.
Dialogue: 0,0:20:19.40,0:20:21.90,Default,Lin,0000,0000,0000,,Tôi không biết, nhưng mà...
Dialogue: 0,0:20:22.65,0:20:24.78,Default,Glut,0000,0000,0000,,Ta...
Dialogue: 0,0:20:26.49,0:20:29.74,Default,Glut,0000,0000,0000,,Ta biết cái mùi này!
Dialogue: 0,0:20:49.47,0:20:50.97,Default,Lin,0000,0000,0000,,Rất vui khi thấy cô vẫn mạnh khỏe!
Dialogue: 0,0:20:52.02,0:20:54.56,Default,Lin,0000,0000,0000,,Tôi đợi cô hơi lâu rồi đó, Lan Fan!
Dialogue: 0,0:20:58.81,0:21:03.07,Default,Nar,0000,0000,0000,,Nếu ngươi thấy sợ hãi khi đã nắm rõ khả năng của kẻ địch và của mình,
Dialogue: 0,0:21:03.07,0:21:05.24,Default,Nar,0000,0000,0000,,hãy mau chạy trốn.
Dialogue: 0,0:21:05.61,0:21:09.24,Default,Nar,0000,0000,0000,,Thế nhưng, nếu ngươi vẫn kiên cường, tập trung chiến đấu,
Dialogue: 0,0:21:09.24,0:21:11.49,Default,Nar,0000,0000,0000,,chiến thắng sẽ nằm trong tầm tay.
Dialogue: 0,0:21:12.58,0:21:16.79,Default,Nar,0000,0000,0000,,Lần tới, Cang Giả Kim Thuật Sư - Fullmetal Alchemist:
