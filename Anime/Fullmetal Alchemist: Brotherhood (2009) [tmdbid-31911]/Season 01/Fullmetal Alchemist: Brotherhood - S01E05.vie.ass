Dialogue: 1,0:00:30.00,0:00:33.01,Title - TS,Nar,0000,0000,0000,,{\fs80\pos(640,552)}Cơn Mưa Buồn
Dialogue: 1,0:00:30.00,0:00:33.01,Credit,Nar,0000,0000,0000,,Subbed by BLACK - ATeam
Dialogue: 0,0:00:36.47,0:00:38.98,Default,Ed,0000,0000,0000,,Mẹ ơi, mẹ ơi!
Dialogue: 0,0:00:38.98,0:00:40.50,Default,Mom,0000,0000,0000,,Sao thế, Ed?
Dialogue: 0,0:00:41.57,0:00:42.72,Default,Ed,0000,0000,0000,,Quà cho mẹ này.
Dialogue: 0,0:00:43.10,0:00:44.81,Default,Ed,0000,0000,0000,,Con tự biến ra đấy!
Dialogue: 0,0:00:44.81,0:00:45.97,Default,Mom,0000,0000,0000,,Thế à?
Dialogue: 0,0:00:46.42,0:00:48.25,Default,Mom,0000,0000,0000,,Đúng là con của bố có khác.
Dialogue: 0,0:00:48.81,0:00:49.99,Default,Mom,0000,0000,0000,,Cảm ơn con nhé.
Dialogue: 0,0:00:49.99,0:00:51.86,Default,Mom,0000,0000,0000,,Con giỏi thật đấy.
Dialogue: 0,0:00:51.86,0:00:54.32,Default,Mom,0000,0000,0000,,Mới còn bé đã tạo ra thứ tuyệt vời như này được rồi.
Dialogue: 0,0:00:55.07,0:00:55.84,Default,Mom,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:00:58.89,0:01:02.20,Think,Mom,0000,0000,0000,,Con... không thể chế tạo được mẹ, phải không...
Dialogue: 0,0:01:03.85,0:01:04.97,Think,Nina,0000,0000,0000,,Anh ơi.
Dialogue: 0,0:01:07.28,0:01:08.37,Think,Nina,0000,0000,0000,,Cùng chơi nào.
Dialogue: 0,0:01:13.72,0:01:16.09,Default,Al,0000,0000,0000,,Không sao chứ, anh hai?
Dialogue: 0,0:01:16.88,0:01:18.13,Default,Al,0000,0000,0000,,Hình như anh gặp phải ác mộng hả.
Dialogue: 0,0:01:35.06,0:01:38.15,Default,Riza,0000,0000,0000,,Sao thế hai người? Làm gì mà tới đây sớm thế?
Dialogue: 0,0:01:39.52,0:01:40.65,Default,Ed,0000,0000,0000,,À...
Dialogue: 0,0:01:41.07,0:01:43.21,Default,Ed,0000,0000,0000,,Thế chuyện ông Tucker và Nina sẽ xử lý sao ạ?
Dialogue: 0,0:01:45.51,0:01:50.08,Default,Riza,0000,0000,0000,,Ông Tucker vốn sẽ bị đưa ra tòa và tước bỏ danh hiệu Quốc Gia...
Dialogue: 0,0:01:51.10,0:01:52.91,Default,Riza,0000,0000,0000,,Nhưng cả hai bố con họ chết rồi.
Dialogue: 0,0:01:52.91,0:01:53.58,Default,Al,0000,0000,0000,,Chết rồi?
Dialogue: 0,0:01:55.53,0:01:56.87,Default,Riza,0000,0000,0000,,Vì đằng nào các cậu cũng sẽ biết hết...
Dialogue: 0,0:01:56.87,0:01:58.37,Default,Riza,0000,0000,0000,,nên thôi tôi sẽ kể luôn cho.
Dialogue: 0,0:01:58.37,0:01:59.71,Default,Riza,0000,0000,0000,,Họ đã bị sát hại.
Dialogue: 0,0:02:00.36,0:02:01.47,Default,Ed,0000,0000,0000,,Tại sao!?
Dialogue: 0,0:02:01.93,0:02:02.77,Default,Ed,0000,0000,0000,,Là ai giết?
Dialogue: 0,0:02:02.77,0:02:03.84,Default,Riza,0000,0000,0000,,Chúng tôi vẫn chưa rõ.
Dialogue: 0,0:02:03.84,0:02:05.97,Default,Riza,0000,0000,0000,,Tôi cũng đang tới hiện trường đây.
Dialogue: 0,0:02:06.16,0:02:07.72,Default,Al,0000,0000,0000,,Cho bọn em đi với.
Dialogue: 0,0:02:07.72,0:02:08.22,Default,Riza,0000,0000,0000,,Không được.
Dialogue: 0,0:02:08.41,0:02:09.45,Default,Ed,0000,0000,0000,,Tại sao lại không?
Dialogue: 0,0:02:11.85,0:02:13.13,Default,Riza,0000,0000,0000,,Cậu không nhìn thấy cảnh ấy thì tốt hơn.
Dialogue: 0,0:02:16.88,0:02:18.96,Default,Hughes,0000,0000,0000,,Chúng ta hơi chậm chân rồi.
Dialogue: 0,0:02:18.96,0:02:21.90,Default,Arm,0000,0000,0000,,Phải mau chóng truy bắt hắn, nếu không...
Dialogue: 0,0:02:24.07,0:02:26.71,Default,Roy,0000,0000,0000,,Cậu nói nghe cứ như đã biết chuyện này sẽ xảy ra ấy nhỉ.
Dialogue: 0,0:02:26.71,0:02:27.71,Default,Roy,0000,0000,0000,,Chuyện này là thế nào?
Dialogue: 0,0:02:32.21,0:02:34.97,Default,Cor,0000,0000,0000,,Chúa trời đang thử thách chúng ta!
Dialogue: 0,0:02:34.97,0:02:40.37,Default,Cor,0000,0000,0000,,Lũ tà ma ngoại đạo đang lung lạc đức tin của chúng ta bằng những lời đồn thất thiệt,
Dialogue: 0,0:02:40.37,0:02:42.51,Default,Cor,0000,0000,0000,,còn quân đội đang muốn đàn áp chúng ta!
Dialogue: 0,0:02:42.90,0:02:44.76,Default,Cor,0000,0000,0000,,Nhưng ta sẽ không đầu hàng!
Dialogue: 0,0:02:45.44,0:02:48.16,Default,Cor,0000,0000,0000,,Tất cả hãy cầm vũ khí đứng lên!
Dialogue: 0,0:02:48.16,0:02:50.76,Default,Cor,0000,0000,0000,,Nhân danh Thần Mặt Trời Leto toàn năng!
Dialogue: 0,0:02:50.76,0:02:54.37,Default,Guy,0000,0000,0000,,Đúng thế! Chúng ta có Thần Mặt Trời Leto ở bên phù trợ!
Dialogue: 0,0:02:54.37,0:02:56.10,Default,Guy2,0000,0000,0000,,Giết chết lũ ngoại đạo!
Dialogue: 0,0:02:56.32,0:02:58.02,Default,Guy3,0000,0000,0000,,Này! Đừng bị lão lừa như thế!
Dialogue: 0,0:02:58.02,0:03:00.86,Default,Guy3,0000,0000,0000,,Lão khốn ấy bấy nay đã lừa bịp mọi người!
Dialogue: 0,0:03:00.86,0:03:01.94,Default,Guy2,0000,0000,0000,,Im đi!
Dialogue: 0,0:03:01.94,0:03:04.61,Default,Guy,0000,0000,0000,,Bọn mày cũng là sứ giả của lũ ngoại đạo chứ gì!
Dialogue: 0,0:03:05.55,0:03:08.62,Default,Lust,0000,0000,0000,,Con người thật là ngu ngốc.
Dialogue: 0,0:03:19.05,0:03:21.23,Default,Lust,0000,0000,0000,,Đúng không, Gluttony?
Dialogue: 0,0:03:21.23,0:03:23.19,Default,Glut,0000,0000,0000,,Ngu ngốc! Ngu ngốc!
Dialogue: 0,0:03:23.19,0:03:24.76,Default,Cor,0000,0000,0000,,Ờ, đúng thế đấy.
Dialogue: 0,0:03:25.55,0:03:27.59,Default,Lust,0000,0000,0000,,A, chào ngài giáo chủ.
Dialogue: 0,0:03:27.59,0:03:29.11,Default,Glut,0000,0000,0000,,Chào ngài!
Dialogue: 0,0:03:29.11,0:03:31.48,Default,Lust,0000,0000,0000,,Xin lỗi đã bắt ngài phải vất vả thế này.
Dialogue: 0,0:03:32.13,0:03:36.49,Default,Cor,0000,0000,0000,,Khi nào chuyện ở đây xong tôi sẽ về vị trí của mình ngay.
Dialogue: 0,0:03:37.71,0:03:40.56,Default,Lust,0000,0000,0000,,Thằng nhóc Cang đã ngáng đường chúng ta,
Dialogue: 0,0:03:40.56,0:03:42.48,Default,Lust,0000,0000,0000,,nhưng may mà vẫn lợi dụng được nó vào phút cuối.
Dialogue: 0,0:03:42.83,0:03:45.00,Default,Lust,0000,0000,0000,,Xem ra tất cả sẽ xong xuôi nhanh hơn dự kiến đấy.
Dialogue: 0,0:03:45.55,0:03:50.07,Default,Cor,0000,0000,0000,,Nhờ cô thao túng thông tin, còn tôi kích động lũ tín đồ...
Dialogue: 0,0:03:50.07,0:03:51.92,Default,Cor,0000,0000,0000,,nên tất cả mới được như này đấy.
Dialogue: 0,0:03:51.92,0:03:55.00,Default,Cor,0000,0000,0000,,Con người là giống loài thật đơn giản.
Dialogue: 0,0:03:55.75,0:03:59.70,Default,Lust,0000,0000,0000,,Máu sẽ kêu gọi máu, hận thù nảy sinh hận thù,
Dialogue: 0,0:03:59.70,0:04:02.55,Default,Lust,0000,0000,0000,,và luồng năng lượng sinh ra từ đó sẽ bắt rễ vào mặt đất,
Dialogue: 0,0:04:02.55,0:04:04.47,Default,Lust,0000,0000,0000,,khắc nên một dấu ấn máu.
Dialogue: 0,0:04:05.62,0:04:08.85,Default,Lust,0000,0000,0000,,Dù lịch sử có lặp lại bao lần, chúng cũng chẳng bao giờ chịu hiểu ra.
Dialogue: 0,0:04:09.26,0:04:12.21,Default,Lust,0000,0000,0000,,Con người đúng là tạo vật đáng thương, ngu ngốc.
Dialogue: 0,0:04:12.64,0:04:15.40,Default,Cor,0000,0000,0000,,Nhưng nhờ vậy ta mới có thể đùa bỡn với chúng như này còn gì?
Dialogue: 0,0:04:17.08,0:04:19.42,Default,Glut,0000,0000,0000,,Sẽ có thêm người chết hả?
Dialogue: 0,0:04:19.42,0:04:21.04,Default,Lust,0000,0000,0000,,Ừ, sẽ thêm nhiều lắm.
Dialogue: 0,0:04:21.04,0:04:23.39,Default,Glut,0000,0000,0000,,Tôi ăn người chết được không?
Dialogue: 0,0:04:23.39,0:04:24.78,Default,Lust,0000,0000,0000,,Không được ăn đâu.
Dialogue: 0,0:04:25.07,0:04:28.48,Default,Lust,0000,0000,0000,,Mà này Envy, cậu định giữ cái hình dạng đó tới khi nào vậy?
Dialogue: 0,0:04:28.48,0:04:30.02,Default,Lust,0000,0000,0000,,Thấy gớm quá đi.
Dialogue: 0,0:04:30.02,0:04:32.36,Default,Envy,0000,0000,0000,,Có gì đâu. Theo xu hướng thời thượng chút thôi mà.
Dialogue: 0,0:04:33.43,0:04:38.96,Default,Envy,0000,0000,0000,,Nhưng biến thành hình dạng trẻ trung dễ thương thì hay hơn nhỉ?
Dialogue: 0,0:04:42.52,0:04:43.96,Default,Guy,0000,0000,0000,,Quái vật!
Dialogue: 0,0:04:44.28,0:04:45.47,Default,Guy,0000,0000,0000,,Chuyện này là sao?
Dialogue: 0,0:04:45.47,0:04:46.27,Default,Guy,0000,0000,0000,,Giáo chủ...
Dialogue: 0,0:04:46.27,0:04:49.19,Default,Guy,0000,0000,0000,,Chuyện gì xảy ra với ngài giáo chủ rồi!?
Dialogue: 0,0:04:49.19,0:04:50.34,Default,Lust,0000,0000,0000,,Làm gì bây giờ?
Dialogue: 0,0:04:50.34,0:04:53.78,Default,Envy,0000,0000,0000,,Hắn vừa gọi tôi là quái vật đấy. Bất lịch sự quá.
Dialogue: 0,0:04:53.78,0:04:55.29,Default,Glut,0000,0000,0000,,Tôi ăn nhé?
Dialogue: 0,0:04:58.92,0:05:03.64,Default,Envy,0000,0000,0000,,Mà này, tôi nghe Shou Tucker ở East City bị giết rồi đấy.
Dialogue: 0,0:05:03.64,0:05:05.25,Default,Lust,0000,0000,0000,,Tucker?
Dialogue: 0,0:05:05.25,0:05:07.83,Default,Lust,0000,0000,0000,,Ai thèm quan tâm tới dạng ruồi muỗi ấy chứ?
Dialogue: 0,0:05:07.83,0:05:10.74,Default,Envy,0000,0000,0000,,Mà kẻ sát hại hắn chính là tên đó.
Dialogue: 0,0:05:11.57,0:05:15.47,Default,Lust,0000,0000,0000,,Ở East City có tay Đại tá Lửa nhỉ?
Dialogue: 0,0:05:15.47,0:05:18.94,Default,Envy,0000,0000,0000,,Ừ. Nhóc lùn Cang hình như cũng đang ở đấy nữa.
Dialogue: 0,0:05:18.94,0:05:20.25,Default,Lust,0000,0000,0000,,Cang...
Dialogue: 0,0:05:20.80,0:05:25.94,Default,Lust,0000,0000,0000,,Bị nó phá quấy kể cũng bực thật, nhưng ta không thể để nó chết.
Dialogue: 0,0:05:26.33,0:05:28.42,Default,Lust,0000,0000,0000,,Vì rốt cục nó cũng là một Nhân Trụ quan trọng mà.
Dialogue: 0,0:05:29.17,0:05:30.69,Default,Glut,0000,0000,0000,,Tôi ăn xong rồi!
Dialogue: 0,0:05:31.08,0:05:33.68,Default,Lust,0000,0000,0000,,Tôi hiểu rồi. Bọn tôi sẽ giải quyết chuyện này.
Dialogue: 0,0:05:34.00,0:05:37.56,Default,Lust,0000,0000,0000,,Thế, tên của "kẻ ấy" là gì?
Dialogue: 0,0:05:38.46,0:05:39.56,Default,Roy,0000,0000,0000,,Scar?
Dialogue: 0,0:05:39.92,0:05:41.27,Default,Roy,0000,0000,0000,,Người mang sẹo...
Dialogue: 0,0:05:41.27,0:05:45.10,Default,Hughes,0000,0000,0000,,Ừ. Vì không biết gì về hắn nên chỉ đành gọi hắn như vậy thôi.
Dialogue: 0,0:05:45.10,0:05:47.77,Default,Arm,0000,0000,0000,,Chúng tôi không biết mục đích của hắn là gì, mà hắn hành tung cũng rất bí ẩn.
Dialogue: 0,0:05:48.46,0:05:52.65,Default,Arm,0000,0000,0000,,Tất cả thông tin có được chỉ là hắn có một vết sẹo lớn ở trên trán.
Dialogue: 0,0:05:53.24,0:05:55.28,Default,Roy,0000,0000,0000,,Tôi cũng đã nghe tin đồn về hắn, nhưng...
Dialogue: 0,0:05:55.28,0:05:57.17,Default,Roy,0000,0000,0000,,Vậy ra đó là kẻ mà các cậu đang truy đuổi.
Dialogue: 0,0:05:57.72,0:06:00.24,Default,Hughes,0000,0000,0000,,Bộ tư lệnh quân cảnh cũng đã ban lệnh rồi.
Dialogue: 0,0:06:00.24,0:06:02.89,Default,Hughes,0000,0000,0000,,Tôi thì vẫn còn cả đống việc ở tòa án binh.
Dialogue: 0,0:06:02.89,0:06:04.22,Default,Hughes,0000,0000,0000,,Thật là, đau đầu hết chịu nổi...
Dialogue: 0,0:06:04.22,0:06:06.18,Default,Arm,0000,0000,0000,,Nạn nhân đều là Giả Kim Thuật Sư Quốc Gia.
Dialogue: 0,0:06:06.18,0:06:07.60,Default,Arm,0000,0000,0000,,Tính riêng ở Trung ương thì có năm người,
Dialogue: 0,0:06:07.60,0:06:10.68,Default,Arm,0000,0000,0000,,còn trên toàn quốc là mười người.
Dialogue: 0,0:06:11.08,0:06:13.87,Default,Hughes,0000,0000,0000,,Năm ngày trước bố già Gran cũng bị giết rồi đấy.
Dialogue: 0,0:06:14.57,0:06:16.34,Default,Roy,0000,0000,0000,,Chuẩn tướng Gran sao!?
Dialogue: 0,0:06:16.34,0:06:19.42,Default,Roy,0000,0000,0000,,Ổng là tay trùm chuyển hóa vũ khí và cận chiến mà!
Dialogue: 0,0:06:19.42,0:06:21.81,Default,Hughes,0000,0000,0000,,Vậy mới thấy tên này đáng sợ cỡ nào.
Dialogue: 0,0:06:22.45,0:06:23.83,Default,Hughes,0000,0000,0000,,Nghe tôi này.
Dialogue: 0,0:06:23.83,0:06:26.81,Default,Hughes,0000,0000,0000,,Điều thêm lính canh, rồi im hơi lặng tiếng một thời gian đi.
Dialogue: 0,0:06:26.81,0:06:29.04,Default,Hughes,0000,0000,0000,,Đây là lời khuyên của một người bạn đấy.
Dialogue: 0,0:06:29.41,0:06:33.14,Default,Hughes,0000,0000,0000,,Giả kim thuật sư nổi danh ở đây chỉ có Tucker với cậu thôi nhỉ?
Dialogue: 0,0:06:33.92,0:06:34.83,Default,Roy,0000,0000,0000,,Thôi chết!
Dialogue: 0,0:06:36.84,0:06:40.65,Default,Ed,0000,0000,0000,,Giả kim thuật mà chúng ta vẫn hằng tin tưởng thật ra là gì?
Dialogue: 0,0:06:40.65,0:06:42.09,Default,Ed,0000,0000,0000,,Bấy lâu nay anh cứ nghĩ mãi.
Dialogue: 0,0:06:43.00,0:06:47.84,Default,Ed,0000,0000,0000,,"Giả kim thuật là môn khoa học tìm hiểu quy luật và xu thế bên trong vật chất,"
Dialogue: 0,0:06:48.15,0:06:50.63,Default,Ed,0000,0000,0000,,"phân giải, rồi tái cấu trúc vật chất."
Dialogue: 0,0:06:51.33,0:06:55.33,Default,Ed,0000,0000,0000,,"Thế giới cũng tuần hoàn theo những quy luật ấy."
Dialogue: 0,0:06:55.33,0:06:59.56,Default,Ed,0000,0000,0000,,"Cái chết cũng là một phần trong đó. Hãy chấp nhận xu thế."
Dialogue: 0,0:07:01.07,0:07:03.16,Default,Ed,0000,0000,0000,,Đó là lời sư phụ dạy chúng mình đúng không?
Dialogue: 0,0:07:04.95,0:07:06.62,Default,Ed,0000,0000,0000,,Anh cứ tưởng anh đã hiểu rõ rồi.
Dialogue: 0,0:07:07.35,0:07:09.27,Default,Ed,0000,0000,0000,,Nhưng thật ra anh chẳng hiểu gì cả.
Dialogue: 0,0:07:09.98,0:07:11.28,Default,Ed,0000,0000,0000,,Vì thế chúng ta mới muốn hồi sinh mẹ...
Dialogue: 0,0:07:12.14,0:07:14.62,Default,Ed,0000,0000,0000,,Ngay cả lúc này, anh cũng đang nghĩ tới việc...
Dialogue: 0,0:07:14.62,0:07:17.03,Default,Ed,0000,0000,0000,,đảo ngược những chuyện bất khả thi.
Dialogue: 0,0:07:19.90,0:07:21.27,Default,Ed,0000,0000,0000,,Anh đúng là thằng ngốc.
Dialogue: 0,0:07:21.84,0:07:24.27,Default,Ed,0000,0000,0000,,Từ lúc đó tới nay anh vẫn chẳng trưởng thành lên gì cả.
Dialogue: 0,0:07:25.58,0:07:29.99,Default,Ed,0000,0000,0000,,Cứ nghĩ cơn mưa sẽ cuốn trôi mọi cảm xúc dồn nén trong lòng...
Dialogue: 0,0:07:31.32,0:07:34.67,Default,Ed,0000,0000,0000,,Nhưng từng hạt mưa rơi trên mặt lại càng khiến người ta buồn hơn.
Dialogue: 0,0:07:36.97,0:07:41.43,Default,Al,0000,0000,0000,,Em lại không thể cảm thấy mưa rơi, vì chẳng còn cơ thể.
Dialogue: 0,0:07:42.35,0:07:44.63,Default,Al,0000,0000,0000,,Chỉ riêng chuyện ấy thôi đã buồn lắm rồi.
Dialogue: 0,0:07:45.26,0:07:49.98,Default,Al,0000,0000,0000,,Em vẫn muốn lấy lại cơ thể. Em vẫn muốn trở lại làm người.
Dialogue: 0,0:07:50.59,0:07:55.28,Default,Al,0000,0000,0000,,Dù việc đó là bất khả thi và đi ngược lại xu thế của thế giới.
Dialogue: 0,0:07:57.49,0:08:00.91,Default,Scar,0000,0000,0000,,Cang Giả Kim Thuật Sư, Edward Elric phải không?
Dialogue: 0,0:08:05.14,0:08:05.90,Default,Al,0000,0000,0000,,Anh hai!
Dialogue: 0,0:08:14.64,0:08:16.29,Default,Ed,0000,0000,0000,,Cái quái gì thế!
Dialogue: 0,0:08:23.88,0:08:25.23,Think,Ed,0000,0000,0000,,Tên này là ai?
Dialogue: 0,0:08:25.23,0:08:27.10,Think,Ed,0000,0000,0000,,Toi mất... Toi mất!
Dialogue: 0,0:08:28.31,0:08:29.41,Think,Ed,0000,0000,0000,,Phải chạy đi thôi!
Dialogue: 0,0:08:29.41,0:08:31.23,Think,Ed,0000,0000,0000,,Không xong... Không xong rồi!
Dialogue: 0,0:08:31.56,0:08:32.81,Default,Ed,0000,0000,0000,,Al, chạy đi!
Dialogue: 0,0:08:41.78,0:08:42.74,Default,Scar,0000,0000,0000,,Đừng hòng thoát!
Dialogue: 0,0:08:48.42,0:08:49.32,Default,Al,0000,0000,0000,,Anh hai!
Dialogue: 0,0:08:59.48,0:09:00.59,Default,Ed,0000,0000,0000,,Al, bám vào!
Dialogue: 0,0:09:10.57,0:09:12.73,Default,Ed,0000,0000,0000,,Khốn kiếp, cái quái gì thế!?
Dialogue: 0,0:09:12.73,0:09:14.72,Default,Ed,0000,0000,0000,,Mình đã gây thù chuốc oán với ai...
Dialogue: 0,0:09:15.82,0:09:17.43,Default,Ed,0000,0000,0000,,Bỏ mẹ, nhiều quá không nhớ ra.
Dialogue: 0,0:09:18.14,0:09:20.32,Default,Ed,0000,0000,0000,,Nhưng cũng đâu tới mức phải lấy mạng mình chứ!
Dialogue: 0,0:09:28.03,0:09:29.50,Default,Ed,0000,0000,0000,,Ui da...
Dialogue: 0,0:09:31.05,0:09:34.25,Default,Ed,0000,0000,0000,,Ngươi là ai? Tại sao lại muốn giết bọn ta?
Dialogue: 0,0:09:34.72,0:09:37.14,Default,Scar,0000,0000,0000,,Nếu trên đời có "kẻ sáng tạo" là các ngươi...
Dialogue: 0,0:09:37.14,0:09:39.51,Default,Scar,0000,0000,0000,,vậy thì sẽ có những "kẻ phá hoại" như ta.
Dialogue: 0,0:09:40.02,0:09:42.03,Default,Ed,0000,0000,0000,,Xem ra không còn cách nào khác.
Dialogue: 0,0:09:48.52,0:09:50.02,Default,Scar,0000,0000,0000,,Cũng có gan đấy.
Dialogue: 0,0:09:50.83,0:09:51.43,Default,Scar,0000,0000,0000,,Thế nhưng...
Dialogue: 0,0:09:56.69,0:09:57.68,Default,Scar,0000,0000,0000,,Quá chậm.
Dialogue: 0,0:10:02.68,0:10:03.45,Default,Ed,0000,0000,0000,,Al!
Dialogue: 0,0:10:13.42,0:10:14.96,Think,Scar,0000,0000,0000,,Bên trong rỗng ư?
Dialogue: 0,0:10:14.96,0:10:16.55,Default,Ed,0000,0000,0000,,Đồ khốn!
Dialogue: 0,0:10:19.13,0:10:20.09,Default,Scar,0000,0000,0000,,Vẫn quá chậm!
Dialogue: 0,0:10:23.55,0:10:24.56,Default,Ed,0000,0000,0000,,Tức thật!
Dialogue: 0,0:10:24.76,0:10:26.18,Default,Scar,0000,0000,0000,,Automail...
Dialogue: 0,0:10:26.85,0:10:30.23,Default,Scar,0000,0000,0000,,Ra là vậy, thảo nào không thể sử dụng "phá hoại cơ thể".
Dialogue: 0,0:10:30.52,0:10:32.06,Default,Scar,0000,0000,0000,,Các ngươi cũng khá đấy.
Dialogue: 0,0:10:34.98,0:10:36.86,Default,Al,0000,0000,0000,,Đừng, anh hai!
Dialogue: 0,0:10:36.86,0:10:37.99,Default,Al,0000,0000,0000,,Mau chạy đi!
Dialogue: 0,0:10:37.99,0:10:41.20,Default,Ed,0000,0000,0000,,Đồ ngốc! Làm sao anh bỏ em chạy được!?
Dialogue: 0,0:10:41.20,0:10:43.06,Default,Scar,0000,0000,0000,,Vậy ra ngươi chuyển hóa bằng cách chập tay vào nhau...
Dialogue: 0,0:10:43.06,0:10:44.87,Default,Scar,0000,0000,0000,,để tạo vòng tuần hoàn năng lượng.
Dialogue: 0,0:10:45.33,0:10:46.24,Default,Scar,0000,0000,0000,,Vậy thì...
Dialogue: 0,0:10:48.83,0:10:52.00,Default,Scar,0000,0000,0000,,Ta sẽ phá hủy cánh tay phiến phức của ngươi trước.
Dialogue: 0,0:10:53.88,0:10:54.67,Default,Al,0000,0000,0000,,Anh hai!
Dialogue: 0,0:11:03.64,0:11:06.01,Default,Scar,0000,0000,0000,,Giờ ngươi không thể sử dụng giả kim thuật nữa rồi.
Dialogue: 0,0:11:10.43,0:11:12.35,Default,Scar,0000,0000,0000,,Hãy tranh thủ cầu Chúa đi.
Dialogue: 0,0:11:12.35,0:11:15.57,Default,Al,0000,0000,0000,,Anh hai, chạy đi! Anh hai!
Dialogue: 0,0:11:16.65,0:11:20.49,Default,Ed,0000,0000,0000,,Đáng tiếc, ta chẳng tin vào thần thánh gì hết.
Dialogue: 0,0:11:21.95,0:11:24.24,Default,Ed,0000,0000,0000,,Ngươi chỉ muốn giết ta thôi phải không?
Dialogue: 0,0:11:24.91,0:11:27.49,Default,Ed,0000,0000,0000,,Hay ngươi định giết cả Al nữa?
Dialogue: 0,0:11:28.08,0:11:30.45,Default,Scar,0000,0000,0000,,Nếu nó cản trở ta, ta cũng sẽ giết nó.
Dialogue: 0,0:11:30.45,0:11:34.55,Default,Scar,0000,0000,0000,,Nhưng kẻ duy nhất phải đón nhận sự trừng phạt từ tay ta chỉ là Cang Giả Kim Thuât Sư...
Dialogue: 0,0:11:34.55,0:11:35.75,Default,Scar,0000,0000,0000,,Chính ngươi.
Dialogue: 0,0:11:36.25,0:11:37.21,Default,Ed,0000,0000,0000,,Vậy sao...
Dialogue: 0,0:11:38.59,0:11:40.42,Default,Ed,0000,0000,0000,,Vậy thì hãy hứa với ta.
Dialogue: 0,0:11:40.92,0:11:42.93,Default,Ed,0000,0000,0000,,Không được đụng vào em trai ta!
Dialogue: 0,0:11:44.14,0:11:45.22,Default,Al,0000,0000,0000,,Anh hai...
Dialogue: 0,0:11:45.22,0:11:46.85,Default,Scar,0000,0000,0000,,Ta sẽ giữ lời.
Dialogue: 0,0:11:47.26,0:11:49.35,Default,Al,0000,0000,0000,,Anh đang nói gì vậy... anh hai?
Dialogue: 0,0:11:50.10,0:11:52.39,Default,Al,0000,0000,0000,,Anh đang làm gì thế? Mau chạy đi!
Dialogue: 0,0:11:52.39,0:11:53.60,Default,Al,0000,0000,0000,,Đứng dậy, chạy đi!
Dialogue: 0,0:11:54.48,0:11:56.98,Default,Al,0000,0000,0000,,Đừng... Đừng mà.
Dialogue: 0,0:11:56.98,0:12:00.23,Default,Al,0000,0000,0000,,Ngừng tay lại! Tên khốn!
Dialogue: 0,0:12:02.49,0:12:03.82,Default,Roy,0000,0000,0000,,Ngừng tay được rồi đó.
Dialogue: 0,0:12:03.82,0:12:06.37,Default,Roy,0000,0000,0000,,Ngươi làm bọn ta mệt quá đấy, Scar.
Dialogue: 0,0:12:08.58,0:12:13.62,Default,Roy,0000,0000,0000,,Ta tuyên bố bắt ngươi với tội danh sát hại hàng loạt Giả Kim Thuật Sư Quốc Gia.
Dialogue: 0,0:12:13.62,0:12:18.71,Default,Scar,0000,0000,0000,,Giả kim thuật sư là những kẻ biến đổi hình dáng ban đầu của vật chất.
Dialogue: 0,0:12:19.09,0:12:23.17,Default,Scar,0000,0000,0000,,Nói cách khác, chúng là những kẻ phỉ báng Đấng Sáng Tạo.
Dialogue: 0,0:12:23.17,0:12:26.59,Default,Scar,0000,0000,0000,,Ta là người thay mặt thần linh trừng phạt các ngươi.
Dialogue: 0,0:12:27.30,0:12:29.81,Default,Scar,0000,0000,0000,,Nếu dám ngăn cản ta, ta sẽ giết hết.
Dialogue: 0,0:12:30.89,0:12:31.81,Default,Roy,0000,0000,0000,,Thú vị lắm.
Dialogue: 0,0:12:33.60,0:12:34.98,Default,Roy,0000,0000,0000,,Không ai được can dự vào đây.
Dialogue: 0,0:12:34.98,0:12:36.19,Default,Riza,0000,0000,0000,,Đại tá Mustang!
Dialogue: 0,0:12:36.35,0:12:39.44,Default,Scar,0000,0000,0000,,Mustang... Hỏa Giả Kim Thuật Sư.
Dialogue: 0,0:12:40.40,0:12:43.15,Default,Scar,0000,0000,0000,,Ngươi tự mình mang thân tới chịu tội, thật quá tiện cho ta.
Dialogue: 0,0:12:43.49,0:12:45.34,Default,Scar,0000,0000,0000,,Hôm nay đúng là ngày may mắn!
Dialogue: 0,0:12:45.49,0:12:47.91,Default,Roy,0000,0000,0000,,Đã biết tên ta mà còn dám đối đầu sao?
Dialogue: 0,0:12:48.07,0:12:49.12,Default,Roy,0000,0000,0000,,Đúng là ngu ngốc hết thuốc chữa.
Dialogue: 0,0:12:57.63,0:12:59.71,Default,Roy,0000,0000,0000,,Cô làm cái quái gì thế!?
Dialogue: 0,0:12:59.71,0:13:01.46,Default,Riza,0000,0000,0000,,Đại tá, anh lùi lại đi.
Dialogue: 0,0:13:01.46,0:13:02.92,Default,Riza,0000,0000,0000,,Trời đang mưa nên anh chỉ là tên vô dụng thôi.
