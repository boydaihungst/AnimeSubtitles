Dialogue: 0,0:00:05.19,0:00:06.98,Title - TS,,0000,0000,0000,,{\pos(640,450)}Một Chiến Trường Khác
Dialogue: 0,0:00:08.98,0:00:11.49,TS,,0000,0000,0000,,{\pos(640,500)}Roy Mustang, 18 tuổi
Dialogue: 0,0:09:25.75,0:09:29.25,TS,,0000,0000,0000,,{\c&HFFFFFF&\3c&H000000&\pos(640,500)}Cuộc thanh trừng Ishval
Dialogue: 0,0:00:21.50,0:00:22.50,Default,,0000,0000,0000,,Nghe đây!
Dialogue: 0,0:00:22.50,0:00:25.00,Default,,0000,0000,0000,,Giầy phải đánh sạch đến mức bỏ vào mồm nhai cũng được!
Dialogue: 0,0:00:25.00,0:00:27.30,Default,,0000,0000,0000,,Tôi phạt cậu 25 cái chống đẩy!
Dialogue: 0,0:00:27.30,0:00:28.80,Default,,0000,0000,0000,,Rõ thưa chỉ huy!
Dialogue: 0,0:00:29.40,0:00:30.43,Default,,0000,0000,0000,,Một!
Dialogue: 0,0:00:31.00,0:00:32.45,Default,,0000,0000,0000,,Hai!
Dialogue: 0,0:00:32.45,0:00:34.35,Default,,0000,0000,0000,,Ba!
Dialogue: 0,0:00:34.60,0:00:36.00,Default,,0000,0000,0000,,Tên đần này, làm gì thế hả!?
Dialogue: 0,0:00:36.30,0:00:37.75,Default,,0000,0000,0000,,Cúc áo cài không chuẩn đây này!
Dialogue: 0,0:00:38.30,0:00:40.25,Default,,0000,0000,0000,,Tôi phạt cậu 25 cái chống đẩy!
Dialogue: 0,0:00:40.25,0:00:41.95,Default,,0000,0000,0000,,Rõ thưa chỉ huy!
Dialogue: 0,0:00:41.95,0:00:43.35,Default,,0000,0000,0000,,Một!
Dialogue: 0,0:00:43.35,0:00:43.77,Default,,0000,0000,0000,,Hai!
Dialogue: 0,0:01:24.55,0:01:27.90,Default,,0000,0000,0000,,Câu tiếp theo của bố tôi còn hay hơn cơ...
Dialogue: 0,0:01:28.20,0:01:32.70,Default,,0000,0000,0000,,"Con phải kiếm được nhiều huy chương hơn bố!"
Dialogue: 0,0:01:32.70,0:01:34.95,Default,,0000,0000,0000,,Muốn được vậy thì phải lên cấp Tướng cơ.
Dialogue: 0,0:01:34.95,0:01:35.95,Default,,0000,0000,0000,,Chứ còn gì nữa!
Dialogue: 0,0:01:39.85,0:01:40.80,Default,,0000,0000,0000,,Cậu có sao không?
Dialogue: 0,0:01:40.80,0:01:41.87,Default,,0000,0000,0000,,Đau đấy...
Dialogue: 0,0:01:41.87,0:01:44.05,Default,,0000,0000,0000,,Mắt cậu để đi đâu vậy?
Dialogue: 0,0:01:44.05,0:01:46.15,Default,,0000,0000,0000,,Xin lỗi, anh có sao không?
Dialogue: 0,0:01:53.17,0:01:55.45,Default,,0000,0000,0000,,Người Ishval à?
Dialogue: 0,0:01:57.47,0:01:59.75,Default,,0000,0000,0000,,Đáng lẽ mình chẳng cần phải xin lỗi.
Dialogue: 0,0:01:59.75,0:02:02.05,Default,,0000,0000,0000,,Tao bị dính phải cái mùi gì kì quá.
Dialogue: 0,0:02:02.95,0:02:04.90,Default,,0000,0000,0000,,Có phải là mùi của lũ Ishval không?
Dialogue: 0,0:02:06.70,0:02:08.50,Default,,0000,0000,0000,,Mà Ishval là cái giống...
Dialogue: 0,0:02:16.45,0:02:17.60,Default,,0000,0000,0000,,Đi thôi!
Dialogue: 0,0:02:17.60,0:02:20.05,Default,,0000,0000,0000,,Không phải phí thời giờ với đồ rác rưởi này!
Dialogue: 0,0:02:20.05,0:02:21.10,Default,,0000,0000,0000,,Ừ...
Dialogue: 0,0:02:23.60,0:02:24.80,Default,,0000,0000,0000,,Anh có sao không?
Dialogue: 0,0:02:31.80,0:02:33.40,Default,,0000,0000,0000,,Xui thật nhỉ.
Dialogue: 0,0:02:38.05,0:02:39.00,Default,,0000,0000,0000,,Tôi quen rồi.
Dialogue: 0,0:02:40.17,0:02:41.25,Default,,0000,0000,0000,,Cảm ơn anh.
Dialogue: 0,0:02:58.60,0:02:59.95,Default,,0000,0000,0000,,Xin lỗi nhé.
Dialogue: 0,0:02:59.95,0:03:02.05,Default,,0000,0000,0000,,Bánh rau chân vịt...
Dialogue: 0,0:03:02.05,0:03:03.85,Default,,0000,0000,0000,,là món khoái khẩu của tôi mà.
Dialogue: 0,0:03:16.85,0:03:19.55,Default,,0000,0000,0000,,Cùng phe với cái lũ đó à?
Dialogue: 0,0:03:50.00,0:03:51.80,Default,,0000,0000,0000,,Tôi đói quá.
Dialogue: 0,0:03:51.80,0:03:53.65,Default,,0000,0000,0000,,Ăn thôi ăn thôi!
Dialogue: 0,0:03:59.20,0:04:01.10,Default,,0000,0000,0000,,Xin lỗi.
Dialogue: 0,0:04:01.10,0:04:04.73,Default,,0000,0000,0000,,Bánh rau chân vịt là món khoái khẩu của tôi mà.
Dialogue: 0,0:04:13.00,0:04:15.25,Default,,0000,0000,0000,,Mấy tên kia là quái vật hả?
Dialogue: 0,0:04:20.80,0:04:21.83,Default,,0000,0000,0000,,Maes Hughes!
Dialogue: 0,0:04:22.50,0:04:26.33,Default,,0000,0000,0000,,Trong chiến đấu, phải "chung lưng đấu cật, đồng tâm hiệp lực".
Dialogue: 0,0:04:26.33,0:04:27.50,Default,,0000,0000,0000,,Tốt!
Dialogue: 0,0:04:27.50,0:04:30.00,Default,,0000,0000,0000,,Câu đó có nghĩa là gì, Frederick Sheffield?
Dialogue: 0,0:04:30.00,0:04:30.85,Default,,0000,0000,0000,,Tôi không biết!
Dialogue: 0,0:04:30.85,0:04:32.90,Default,,0000,0000,0000,,Vậy thì anh đã tử trận!
Dialogue: 0,0:04:32.90,0:04:33.63,Default,,0000,0000,0000,,Roy Mustang!
Dialogue: 0,0:04:34.40,0:04:36.25,Default,,0000,0000,0000,,Khi chiến đấu,
Dialogue: 0,0:04:36.25,0:04:39.25,Default,,0000,0000,0000,,chúng ta phải tham chiến theo kế hoạch của cấp trên,
Dialogue: 0,0:04:39.25,0:04:42.00,Default,,0000,0000,0000,,và chiến thắng bằng cách thay đổi chiến thuật tùy theo tình hình.
Dialogue: 0,0:04:42.00,0:04:43.05,Default,,0000,0000,0000,,Tốt!
Dialogue: 0,0:04:43.05,0:04:43.50,Default,,0000,0000,0000,,Tiếp theo!
Dialogue: 0,0:04:43.50,0:04:46.80,Default,,0000,0000,0000,,Yếu tố trực tiếp và gián tiếp sẽ dẫn dắt lẫn nhau
Dialogue: 0,0:04:46.80,0:04:49.50,Default,,0000,0000,0000,,trong một vòng tròn không có điểm dừng.
Dialogue: 0,0:04:58.10,0:05:01.75,Default,,0000,0000,0000,,Cậu có thấy hai tên đó đang ngầm thi thố với nhau không?
Dialogue: 0,0:05:01.75,0:05:03.10,Default,,0000,0000,0000,,Đúng thế.
Dialogue: 0,0:05:29.95,0:05:32.80,Default,,0000,0000,0000,,Mày là dân Ishval mà lớn lối quá đấy.
Dialogue: 0,0:05:32.80,0:05:33.70,Default,,0000,0000,0000,,Đúng thế.
Dialogue: 0,0:05:33.70,0:05:36.10,Default,,0000,0000,0000,,Mày tưởng mày ngang hàng với bọn tao hả?
Dialogue: 0,0:05:37.53,0:05:38.50,Default,,0000,0000,0000,,Dừng lại!
Dialogue: 0,0:05:40.40,0:05:42.00,Default,,0000,0000,0000,,Mày là ai?
Dialogue: 0,0:05:42.00,0:05:45.53,Default,,0000,0000,0000,,Hình như là thằng Mustang năm nhất thì phải.
Dialogue: 0,0:05:45.53,0:05:48.35,Default,,0000,0000,0000,,Theo luật pháp, người dân Ishval
Dialogue: 0,0:05:48.35,0:05:51.52,Default,,0000,0000,0000,,có đủ mọi quyền lợi như dân Amestris.
Dialogue: 0,0:05:51.97,0:05:54.00,Default,,0000,0000,0000,,Vì thế mà chúng ta nhập học trường sĩ quan cơ mà!
Dialogue: 0,0:05:54.00,0:05:58.37,Default,,0000,0000,0000,,Chúng là lũ lạc hậu chỉ biết nghe theo lời chúng ta.
Dialogue: 0,0:06:08.07,0:06:09.55,Default,,0000,0000,0000,,Anh chịu khó một chút.
Dialogue: 0,0:06:12.05,0:06:14.65,Default,,0000,0000,0000,,Mày sẽ dây đầy mùi Ishval đấy!
Dialogue: 0,0:06:15.30,0:06:16.65,Default,,0000,0000,0000,,Hôi thật!
Dialogue: 0,0:06:23.50,0:06:24.25,Default,,0000,0000,0000,,Thằng chó!
Dialogue: 0,0:06:24.85,0:06:26.70,Default,,0000,0000,0000,,Mày dám phản kháng thượng cấp hả?
Dialogue: 0,0:06:36.80,0:06:38.70,Default,,0000,0000,0000,,Đủ rồi đấy, Roy Mustang!
Dialogue: 0,0:06:40.45,0:06:41.93,Default,,0000,0000,0000,,Maes?
Dialogue: 0,0:06:41.93,0:06:44.10,Default,,0000,0000,0000,,Cẩn thận với khẩu súng đấy!
Dialogue: 0,0:06:44.10,0:06:46.43,Default,,0000,0000,0000,,Các đàn anh, xin hãy giữ bí mật chuyện này.
Dialogue: 0,0:06:46.43,0:06:49.70,Default,,0000,0000,0000,,Tôi sẽ tự tay xử lý hai đứa nó.
Dialogue: 0,0:06:51.70,0:06:55.20,Default,,0000,0000,0000,,Roy Mustang và tên Ishval kia, lại đây.
Dialogue: 0,0:07:19.80,0:07:22.75,Default,,0000,0000,0000,,Cậu định làm gì vậy, Maes?
Dialogue: 0,0:07:23.75,0:07:27.50,Default,,0000,0000,0000,,Này thằng kia, cái loại chèn ép người khác như mày...
Dialogue: 0,0:07:28.00,0:07:29.50,Default,,0000,0000,0000,,là tao ghét nhất đấy!
Dialogue: 0,0:07:32.20,0:07:33.85,Default,,0000,0000,0000,,"Chung lưng đấu cật"...
Dialogue: 0,0:07:35.30,0:07:36.60,Default,,0000,0000,0000,,"Đồng tâm hiệp lực"!
Dialogue: 0,0:07:56.05,0:07:58.75,Default,,0000,0000,0000,,Tên cậu là gì?
Dialogue: 0,0:07:58.75,0:08:00.60,Default,,0000,0000,0000,,Heiss Clif.
Dialogue: 0,0:08:00.60,0:08:02.07,Default,,0000,0000,0000,,Heiss Clif Arber.
Dialogue: 0,0:08:02.29,0:08:04.95,Default,,0000,0000,0000,,Tên hay thật đấy nhỉ?
Dialogue: 0,0:08:06.50,0:08:11.07,Default,,0000,0000,0000,,Heiss Clif, tại sao cậu lại vào trường sĩ quan?
Dialogue: 0,0:08:13.95,0:08:16.25,Default,,0000,0000,0000,,Tất cả là vì đồng bào Ishval.
Dialogue: 0,0:08:16.85,0:08:19.00,Default,,0000,0000,0000,,Tôi sẽ trở thành một quân nhân
Dialogue: 0,0:08:19.00,0:08:22.15,Default,,0000,0000,0000,,và xóa bỏ nạn phân biệt từ trong lòng quân đội.
Dialogue: 0,0:08:24.75,0:08:27.00,Default,,0000,0000,0000,,Còn cậu thì sao?
Dialogue: 0,0:08:29.85,0:08:34.55,Default,,0000,0000,0000,,Amestris bị bao quanh bởi rất nhiều cường quốc.
Dialogue: 0,0:08:34.55,0:08:37.40,Default,,0000,0000,0000,,Tôi muốn trở thành tảng đá trụ vững, bảo vệ đất nước.
Dialogue: 0,0:08:37.95,0:08:41.40,Default,,0000,0000,0000,,Vì lý tưởng đó, dù có xác phơi ngoài trận tôi cũng chẳng sợ.
Dialogue: 0,0:08:42.00,0:08:46.60,Default,,0000,0000,0000,,Còn tôi vì cái gì thì cũng không thích chết ngoài đường đâu.
Dialogue: 0,0:08:46.60,0:08:48.90,Default,,0000,0000,0000,,Dù có phải gặm cỏ, tôi cũng phải sống.
Dialogue: 0,0:08:48.90,0:08:52.55,Default,,0000,0000,0000,,Vậy thì tại sao cậu lại vào trường sĩ quan?
Dialogue: 0,0:08:52.55,0:08:55.26,Default,,0000,0000,0000,,Cậu thì muốn bảo vệ đất nước,
Dialogue: 0,0:08:55.26,0:08:57.70,Default,,0000,0000,0000,,nhưng tôi chỉ muốn bảo vệ người con gái tôi yêu thôi.
Dialogue: 0,0:08:59.25,0:09:01.20,Default,,0000,0000,0000,,Cậu đã có em nào ngon thế rồi cơ à?
Dialogue: 0,0:09:01.20,0:09:05.30,Default,,0000,0000,0000,,Ngốc thật, chắc chắn tôi sẽ kiếm được một em như thế rồi.
Dialogue: 0,0:09:46.95,0:09:48.20,Default,,0000,0000,0000,,Tình hình thế nào?
Dialogue: 0,0:09:53.85,0:09:58.40,Default,,0000,0000,0000,,Chúng bắn về phía chúng ta từ nóc nhà phía trước.
Dialogue: 0,0:09:58.40,0:10:02.20,Default,,0000,0000,0000,,Với lực lượng hiện tại chúng ta không thể đột phá.
Dialogue: 0,0:10:03.75,0:10:04.95,Default,,0000,0000,0000,,Vậy à.
Dialogue: 0,0:10:04.95,0:10:06.60,Default,,0000,0000,0000,,Được, để tôi xử chúng nó!
Dialogue: 0,0:10:06.60,0:10:07.47,Default,,0000,0000,0000,,Rõ!
Dialogue: 0,0:10:31.50,0:10:32.50,Default,,0000,0000,0000,,Hay lắm!
Dialogue: 0,0:11:03.15,0:11:05.40,Default,,0000,0000,0000,,Heiss Clif?
Dialogue: 0,0:11:05.40,0:11:08.90,Default,,0000,0000,0000,,Roy Mustang?
Dialogue: 0,0:11:11.75,0:11:13.35,Default,,0000,0000,0000,,Tại sao?
Dialogue: 0,0:11:23.45,0:11:24.50,Default,,0000,0000,0000,,Roy!
Dialogue: 0,0:11:24.50,0:11:26.00,Default,,0000,0000,0000,,Roy Mustang!
Dialogue: 0,0:11:41.43,0:11:44.95,Default,,0000,0000,0000,,Có việc rồi đây, Thiếu Tá Mustang.
Dialogue: 0,0:11:45.50,0:11:50.45,Default,,0000,0000,0000,,Vào lúc 7h30 hôm nay, chúng ta sẽ thanh trừng khu vực số 27.
Dialogue: 0,0:11:50.45,0:11:53.80,Default,,0000,0000,0000,,Họ nói sẽ tiếp tục trông cậy vào cậu đấy.
Dialogue: 0,0:11:53.80,0:11:55.55,Default,,0000,0000,0000,,Đúng là lũ bóc lột.
Dialogue: 0,0:11:55.55,0:11:59.20,Default,,0000,0000,0000,,Cậu được kì vọng lắm đấy, khéo lại sắp lên lon nữa rồi.
Dialogue: 0,0:12:00.85,0:12:02.17,Default,,0000,0000,0000,,Này Hughes...
Dialogue: 0,0:12:02.17,0:12:07.20,Default,,0000,0000,0000,,Tại sao tôi lại phải giết người dân của đất nước tôi?
Dialogue: 0,0:12:08.35,0:12:09.92,Default,,0000,0000,0000,,Đã bảo rồi,
Dialogue: 0,0:12:09.92,0:12:13.55,Default,,0000,0000,0000,,người Ishval đã phá hoại nền hòa bình của đất nước,
Dialogue: 0,0:12:13.55,0:12:17.10,Default,,0000,0000,0000,,và bây giờ các sếp ở Central ra lệnh cho chúng ta thanh trừng họ.
Dialogue: 0,0:12:17.10,0:12:19.60,Default,,0000,0000,0000,,"Thanh trừng" à?
Dialogue: 0,0:12:19.60,0:12:24.35,Default,,0000,0000,0000,,Chỉ là một từ hoa mỹ thay cho "tàn sát tất cả" thôi.
Dialogue: 0,0:12:27.50,0:12:29.03,Default,,0000,0000,0000,,Nói Central mới nhớ...
Dialogue: 0,0:12:29.65,0:12:34.35,Default,,0000,0000,0000,,Gracia gửi thư cho tôi kèm theo ảnh đấy, cậu xem không?
Dialogue: 0,0:12:34.35,0:12:37.70,Default,,0000,0000,0000,,Nhỡ không được người ta thương thì buồn lắm.
Dialogue: 0,0:12:37.70,0:12:39.85,Default,,0000,0000,0000,,Cô ấy phải nói là cực kì đấy.
Dialogue: 0,0:12:39.85,0:12:41.93,Default,,0000,0000,0000,,Khi chiến tranh kết thúc và ổn định được mọi việc,
Dialogue: 0,0:12:41.93,0:12:44.35,Default,,0000,0000,0000,,chắc tớ sẽ cầu hôn cô ấy.
Dialogue: 0,0:12:44.35,0:12:46.50,Default,,0000,0000,0000,,Tôi sẽ mời cậu đến ăn cưới, cứ chuẩn bị đi.
Dialogue: 0,0:12:47.00,0:12:51.50,Default,,0000,0000,0000,,Cậu sẽ ôm người cậu yêu thương bằng đôi tay vấy máu ấy à?
Dialogue: 0,0:12:53.50,0:12:55.95,Default,,0000,0000,0000,,Từ chiến trường này tôi đã học được một điều!
Dialogue: 0,0:12:55.95,0:13:00.45,Default,,0000,0000,0000,,Được ở bên người mình yêu là niềm hạnh phúc mà nơi đâu cũng có!
Dialogue: 0,0:13:00.45,0:13:02.45,Default,,0000,0000,0000,,Nhưng nó cũng là niềm hạnh phúc lớn nhất!
Dialogue: 0,0:13:02.45,0:13:08.00,Default,,0000,0000,0000,,Tôi sẽ bằng mọi giá đạt được nó! Tôi sẽ sống!
Dialogue: 0,0:13:10.10,0:13:11.97,Default,,0000,0000,0000,,Tất cả những gì tôi làm ở đây...
Dialogue: 0,0:13:13.10,0:13:19.25,Default,,0000,0000,0000,,Tôi sẽ gánh trên vai tất cả và mỉm cười với cô ấy.
Dialogue: 0,0:13:19.75,0:13:24.75,Default,,0000,0000,0000,,Tôi sẽ khiến cô ấy hạnh phúc.
Dialogue: 0,0:13:31.80,0:13:34.80,Default,,0000,0000,0000,,Chúng ta không rảnh mà nói mấy chuyện vặt ấy đâu.
Dialogue: 0,0:13:34.80,0:13:38.20,Default,,0000,0000,0000,,Đến giờ làm việc rồi, mau chuẩn bị đi.
Dialogue: 0,0:13:39.50,0:13:42.50,Default,,0000,0000,0000,,Cậu có thể chờ 30 giây không?
Dialogue: 0,0:13:44.50,0:13:46.00,Default,,0000,0000,0000,,Chỉ 30 giây thôi đấy.
Dialogue: 0,0:14:47.00,0:14:48.35,Default,,0000,0000,0000,,Hết 30 giây rồi
Dialogue: 0,0:14:48.35,0:14:51.07,Default,,0000,0000,0000,,Đứng dậy đi, Hỏa Giả Kim Thuật Sư.
Dialogue: 0,0:14:51.90,0:14:53.20,Default,,0000,0000,0000,,Đến giờ rồi.
Dialogue: 0,0:14:57.60,0:14:59.60,Default,,0000,0000,0000,,Ừ, đi thôi.
Dialogue: 0,0:15:03.50,0:15:05.20,Default,,0000,0000,0000,,Đến giờ chiến đấu rồi.
Dialogue: 0,0:15:13.90,0:15:14.95,Default,,0000,0000,0000,,Bố ơi!
Dialogue: 0,0:15:14.00,0:15:16.15,Default-alt,,0000,0000,0000,,Mẹ ơi con về rồi!
Dialogue: 0,0:15:16.15,0:15:18.90,Default,,0000,0000,0000,,Con cao lớn quá!
Dialogue: 0,0:15:17.50,0:15:18.90,Default-alt,,0000,0000,0000,,May mà anh không sao.
Dialogue: 0,0:15:21.55,0:15:25.00,Default,,0000,0000,0000,,Cô ấy nói trong thư là sẽ đến đón tôi mà...
Dialogue: 0,0:15:25.75,0:15:27.33,Default,,0000,0000,0000,,Maes!
Dialogue: 0,0:15:30.75,0:15:32.50,Default,,0000,0000,0000,,Gracia.
Dialogue: 0,0:15:32.50,0:15:33.30,Default,,0000,0000,0000,,Gracia!
Dialogue: 0,0:15:34.25,0:15:35.30,Default,,0000,0000,0000,,Maes!
Dialogue: 0,0:15:37.95,0:15:39.30,Think,,0000,0000,0000,,{\fad(0,300)}Những việc tôi làm ở đây...
Dialogue: 0,0:15:39.30,0:15:41.20,Think,,0000,0000,0000,,{\fad(0,300)}Tôi sẽ gánh trên vai tất cả...
Dialogue: 0,0:15:41.20,0:15:43.40,Think,,0000,0000,0000,,{\fad(0,300)} và mỉm cười với cô ấy.
Dialogue: 0,0:15:47.55,0:15:48.93,Think,,0000,0000,0000,,Hughes...
Dialogue: 0,0:15:49.75,0:15:51.45,Think,,0000,0000,0000,,Cậu thật mạnh mẽ.
Dialogue: 0,0:15:54.45,0:15:55.88,Think,,0000,0000,0000,,Tôi...
Dialogue: 0,0:15:55.88,0:15:58.45,Think,,0000,0000,0000,,vẫn chưa thể mạnh mẽ như cậu.
