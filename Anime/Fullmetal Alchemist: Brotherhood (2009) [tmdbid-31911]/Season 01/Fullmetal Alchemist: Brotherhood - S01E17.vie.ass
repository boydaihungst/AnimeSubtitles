Dialogue: 1,0:02:46.52,0:02:49.52,Title - TS,Nar,0000,0000,0000,,{\fs80\pos(640,552)}Ngọn Lửa Lạnh Lùng
Dialogue: 1,0:02:46.52,0:02:49.52,Credit,Nar,0000,0000,0000,,{}Subbed by BLACK - ATeam
Dialogue: 0,0:02:36.55,0:02:39.80,Default,Arm,0000,0000,0000,,Vậy là họ định gán tội sát nhân luôn cho cô ấy?
Dialogue: 0,0:02:53.48,0:02:56.32,Default,Winry,0000,0000,0000,,Nhìn kĩ lại mới thấy người cậu trầy xước khắp nơi.
Dialogue: 0,0:02:57.36,0:02:59.24,Default,Winry,0000,0000,0000,,Hành trình gian khó thật đấy nhỉ?
Dialogue: 0,0:03:04.91,0:03:07.20,Default,Winry,0000,0000,0000,,Thế các cậu tính làm gì tiếp theo vậy?
Dialogue: 0,0:03:10.87,0:03:11.71,Default,Winry,0000,0000,0000,,Này...
Dialogue: 0,0:03:18.05,0:03:19.80,Default,Ed,0000,0000,0000,,Làm sao đây...
Dialogue: 0,0:03:21.76,0:03:23.93,Think,Elicia,0000,0000,0000,,Mẹ ơi, đừng khóc mà.
Dialogue: 0,0:03:32.94,0:03:34.19,Default,Ed,0000,0000,0000,,Cậu muốn tớ phải làm sao bây giờ?
Dialogue: 0,0:03:38.07,0:03:39.40,Default,Ed,0000,0000,0000,,Sao vậy hả?
Dialogue: 0,0:03:40.07,0:03:43.87,Default,Winry,0000,0000,0000,,Không, tớ đang ngạc nhiên khi lần đầu tiên thấy cậu hỏi tớ...
Dialogue: 0,0:03:43.87,0:03:44.95,Default,Winry,0000,0000,0000,,về chuyện mình phải làm thôi...
Dialogue: 0,0:03:47.16,0:03:48.29,Default,Ed,0000,0000,0000,,Vậy hả...
Dialogue: 0,0:03:54.37,0:03:55.92,Default,Winry,0000,0000,0000,,Tớ sợ lắm.
Dialogue: 0,0:03:57.38,0:04:00.90,Default,Winry,0000,0000,0000,,Các cậu đang chiến đấu ở nơi nguy hiểm
Dialogue: 0,0:04:00.92,0:04:03.34,Default,Winry,0000,0000,0000,,đến mức chú Hughes cũng bị sát hại.
Dialogue: 0,0:04:04.30,0:04:07.22,Default,Winry,0000,0000,0000,,Cứ nghĩ đến điều ấy là tớ lại sợ vô cùng.
Dialogue: 0,0:04:11.60,0:04:14.14,Default,Winry,0000,0000,0000,,Bởi vì... các cậu có thể sẽ ra đi mãi mãi.
Dialogue: 0,0:04:15.06,0:04:17.65,Default,Winry,0000,0000,0000,,Đột ngột biến mất khỏi cuộc đời tớ.
Dialogue: 0,0:04:19.69,0:04:21.40,Default,Winry,0000,0000,0000,,Cũng như cha và mẹ vậy...
Dialogue: 0,0:04:25.03,0:04:28.45,Default,Winry,0000,0000,0000,,Tớ cứ nghĩ đến cảnh ấy là lại thấy sợ đến run người.
Dialogue: 0,0:04:29.45,0:04:32.41,Default,Winry,0000,0000,0000,,Nói thật, tớ chỉ muốn các cậu đừng tiếp tục cuộc hành trình này.
Dialogue: 0,0:04:36.38,0:04:38.59,Default,Winry,0000,0000,0000,,Tớ muốn các cậu lấy lại được cơ thể.
Dialogue: 0,0:04:39.34,0:04:41.42,Default,Winry,0000,0000,0000,,Nhưng tớ lại không muốn các cậu gặp nguy hiểm.
Dialogue: 0,0:04:42.51,0:04:43.30,Default,Winry,0000,0000,0000,,Bởi vì...
Dialogue: 0,0:04:45.68,0:04:46.47,Default,Winry,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:04:51.85,0:04:52.77,Default,Winry,0000,0000,0000,,Tớ xin lỗi.
Dialogue: 0,0:04:54.48,0:04:58.23,Default,Winry,0000,0000,0000,,Tớ cũng chẳng biết mình muốn gì nữa.
Dialogue: 0,0:05:01.11,0:05:02.73,Default,Al,0000,0000,0000,,Winry hôm nay nữ tính ghê ấy.
Dialogue: 0,0:05:02.73,0:05:05.15,Default,Winry,0000,0000,0000,,Hả? Cậu... Cậu nói cái gì vậy?
Dialogue: 0,0:05:05.15,0:05:07.99,Default,Winry,0000,0000,0000,,Tớ lúc nào mà chẳng nữ tính!
Dialogue: 0,0:05:08.45,0:05:11.37,Default,Winry,0000,0000,0000,,Al đểu cáng, dám đá đểu tớ à?
Dialogue: 0,0:05:07.24,0:05:10.28,Default-alt,Al,0000,0000,0000,,Đừng! Cậu làm tớ xước thêm bây giờ!
Dialogue: 0,0:05:16.87,0:05:18.04,Default,66,0000,0000,0000,,Đỡ nè.
Dialogue: 0,0:05:19.75,0:05:21.55,Default,Guy,0000,0000,0000,,Báo tới đây!
Dialogue: 0,0:05:22.13,0:05:22.96,Default,Fal,0000,0000,0000,,Tới rồi!
Dialogue: 0,0:05:23.42,0:05:25.72,Default,66,0000,0000,0000,,Gì vậy, lại báo nữa à?
Dialogue: 0,0:05:25.72,0:05:28.18,Default,Fal,0000,0000,0000,,Tôi bị bắt phải theo dõi ông cả ngày trời.
Dialogue: 0,0:05:28.89,0:05:31.22,Default,Fal,0000,0000,0000,,Đời tôi chỉ còn biết mong chờ mỗi cái này nữa thôi.
Dialogue: 0,0:05:35.98,0:05:37.28,Default,Fal,0000,0000,0000,,Chuẩn úy Falman đây.
Dialogue: 0,0:05:37.28,0:05:38.56,Default,Fal,0000,0000,0000,,Tôi đang gọi từ đường dây bên ngoài.
Dialogue: 0,0:05:38.56,0:05:40.52,Default,Fal,0000,0000,0000,,Cho tôi nói chuyện với Đại tá Mustang.
Dialogue: 0,0:05:41.36,0:05:42.98,Default,Fal,0000,0000,0000,,Đúng vậy. Mã số của tôi là...
Dialogue: 0,0:05:42.98,0:05:45.19,Default,66,0000,0000,0000,,Lại có vụ gì hay ho hả?
Dialogue: 0,0:05:45.19,0:05:48.95,Default,Fal,0000,0000,0000,,Airam, George, Oliver, 4649.
Dialogue: 0,0:05:50.66,0:05:53.70,Default,66,0000,0000,0000,,Ồ, là cô em hôm đó!
Dialogue: 0,0:05:56.71,0:05:58.21,Think,Ed,0000,0000,0000,,Hòn Đá Triết Gia...
Dialogue: 0,0:05:59.37,0:06:02.21,Think,Ed,0000,0000,0000,,Những kẻ mang hình xăm Ouroboros...
Dialogue: 0,0:06:03.63,0:06:05.09,Think,Ed,0000,0000,0000,,Homunculus...
Dialogue: 0,0:06:07.59,0:06:08.63,Think,Ed,0000,0000,0000,,Làm thế nào...
Dialogue: 0,0:06:08.63,0:06:09.51,Default,Al,0000,0000,0000,,Anh hai!
Dialogue: 0,0:06:10.93,0:06:11.85,Default,Al,0000,0000,0000,,Nhìn này...
Dialogue: 0,0:06:11.85,0:06:14.06,Default,Ed,0000,0000,0000,,Đừng có hù anh vậy chứ.
Dialogue: 0,0:06:14.06,0:06:16.73,Default,Al,0000,0000,0000,,Em vừa lấy cái này ở quầy tiếp tân xong!
Dialogue: 0,0:06:17.89,0:06:19.39,Default,Ed,0000,0000,0000,,Gì thế hả?
Dialogue: 0,0:06:22.06,0:06:23.61,Default,Ed,0000,0000,0000,,Cái gì thế này!?
Dialogue: 0,0:06:24.36,0:06:29.03,Default,Ed,0000,0000,0000,,"Thiếu úy Maria Ross bị khép tội sát hại Chuẩn tướng Hughes" ư!?
Dialogue: 0,0:06:31.82,0:06:33.28,Default,Al,0000,0000,0000,,Không thể nào tin được.
Dialogue: 0,0:06:33.28,0:06:36.37,Default,Ed,0000,0000,0000,,Chắc Đại tá hoặc Thiếu tá có thể biết thêm chi tiết.
Dialogue: 0,0:06:36.37,0:06:37.83,Default,Al,0000,0000,0000,,Anh có định nói với Winry không?
Dialogue: 0,0:06:38.37,0:06:39.79,Default,Ed,0000,0000,0000,,Anh sẽ giải thích với cậu ấy sau.
Dialogue: 0,0:06:43.42,0:06:45.38,Default,Ling,0000,0000,0000,,Tôi chẳng thích đeo cái này đâu.
Dialogue: 0,0:06:45.38,0:06:48.88,Default,Guy,0000,0000,0000,,Lèo nhèo cái gì. Cái đó giống như vòng cổ cho chó thôi.
Dialogue: 0,0:06:49.17,0:06:50.93,Default,Guy,0000,0000,0000,,Mà tôi hỏi cậu một lần nữa...
Dialogue: 0,0:06:50.93,0:06:53.18,Default,Guy,0000,0000,0000,,Cậu mười lăm tuổi thật đấy hả?
Dialogue: 0,0:06:53.18,0:06:54.68,Default,Ling,0000,0000,0000,,Vâng ạ.
Dialogue: 0,0:06:54.68,0:06:56.06,Default,Guy,0000,0000,0000,,Đừng có nói dối nữa.
Dialogue: 0,0:06:56.06,0:06:58.43,Default,Ling,0000,0000,0000,,Tôi nói thật mà...
Dialogue: 0,0:07:00.52,0:07:01.44,Default,Guy,0000,0000,0000,,Cái gì thế?
Dialogue: 0,0:07:02.40,0:07:03.40,Default,Guy,0000,0000,0000,,Chuyện gì xảy ra vậy?
Dialogue: 0,0:07:03.40,0:07:04.48,Default,Guy2,0000,0000,0000,,Có kẻ đột nhập!
Dialogue: 0,0:07:04.48,0:07:05.77,Default,Guy2,0000,0000,0000,,Mau giúp chúng tôi một tay!
Dialogue: 0,0:07:05.77,0:07:06.69,Default,Guy,0000,0000,0000,,Sao cơ!?
Dialogue: 0,0:07:07.23,0:07:08.69,Default,Guy,0000,0000,0000,,Ngoan ngoãn ngồi yên trong cũi đi!
Dialogue: 0,0:07:08.69,0:07:09.87,Default,Ling,0000,0000,0000,,Dạ vâng!
Dialogue: 0,0:07:12.78,0:07:15.08,Default,66,0000,0000,0000,,Yếu, yếu, yếu quá!
Dialogue: 0,0:07:15.08,0:07:17.70,Default,66,0000,0000,0000,,Mấy ông bạn nhiệt tình hơn một chút xem nào!
Dialogue: 0,0:07:18.29,0:07:19.58,Default,Guy,0000,0000,0000,,Tên này là thứ quỷ gì vậy!?
Dialogue: 0,0:07:19.58,0:07:21.08,Default,Guy2,0000,0000,0000,,Súng đạn không có tác dụng!
Dialogue: 0,0:07:22.58,0:07:23.33,Default,Guy,0000,0000,0000,,Tránh ra!
Dialogue: 0,0:07:23.33,0:07:23.96,Default,Guy,0000,0000,0000,,Đồ khốn!
Dialogue: 0,0:07:26.00,0:07:26.67,Default,66,0000,0000,0000,,Úi chà!
Dialogue: 0,0:07:28.92,0:07:30.42,Default,,0000,0000,0000,,{\fsp5\an8\c&H7FD0DB&\3c&H58509F&\shad0\bord5\pos(1028,22)\fs75\fnUVN But Long 2}Quái vật!!
Dialogue: 0,0:07:36.56,0:07:40.02,Default,66,0000,0000,0000,,Không được chặt thịt người sao mà ngứa ngáy quá.
Dialogue: 0,0:07:40.52,0:07:43.10,Default,Ling,0000,0000,0000,,Ê này! Ông bạn súng đạn bắn vào chẳng xi nhê ơi!
Dialogue: 0,0:07:43.10,0:07:45.19,Default,Ling,0000,0000,0000,,Ông bạn cứu tôi ra khỏi đây nhé?
Dialogue: 0,0:07:45.19,0:07:46.77,Default,66,0000,0000,0000,,Nhóc mày là ai?
Dialogue: 0,0:07:46.77,0:07:48.94,Default,Ling,0000,0000,0000,,Tôi là một người Xing vượt biên trái phép.
Dialogue: 0,0:07:48.94,0:07:50.28,Default,66,0000,0000,0000,,Vậy hả.
Dialogue: 0,0:07:50.28,0:07:52.78,Default,66,0000,0000,0000,,Chú nhóc vất vả thật đó.
Dialogue: 0,0:07:52.78,0:07:54.61,Default,Ling,0000,0000,0000,,Cứu tôi ra đi rồi tôi giúp ông bạn một tay mà!
Dialogue: 0,0:07:54.61,0:07:57.16,Default,66,0000,0000,0000,,Ta không thừa thì giờ lằng nhằng với nhóc...
Dialogue: 0,0:07:59.37,0:08:01.04,Default,66,0000,0000,0000,,Mà nhóc vừa bảo mình người nước nào?
Dialogue: 0,0:08:01.04,0:08:02.62,Default,Ling,0000,0000,0000,,Nước Xing ở phía đông.
Dialogue: 0,0:08:04.54,0:08:05.75,Default,66,0000,0000,0000,,Đi theo ta.
Dialogue: 0,0:08:05.75,0:08:06.92,Default,Ling,0000,0000,0000,,Cảm ơn nhé.
Dialogue: 0,0:08:15.22,0:08:16.34,Default,Maria,0000,0000,0000,,Cái gì vậy?
Dialogue: 0,0:08:23.73,0:08:25.90,Default,66,0000,0000,0000,,Xin chào bé cưng~
Dialogue: 0,0:08:25.90,0:08:27.90,Default,66,0000,0000,0000,,Tìm được cô em rồi nhé!
Dialogue: 0,0:08:28.69,0:08:30.32,Default,Maria,0000,0000,0000,,Ngươi là kẻ ở Phòng Nghiên cứu số 5...
Dialogue: 0,0:08:31.32,0:08:34.24,Default,66,0000,0000,0000,,Cô em còn nhớ là ta vui lắm rồi.
Dialogue: 0,0:08:34.82,0:08:37.96,Default,66,0000,0000,0000,,Mỗi lần nhìn thấy lỗ đạn trên tay phải
Dialogue: 0,0:08:37.96,0:08:40.37,Default,66,0000,0000,0000,,ta lại tơ tưởng về cô em đó.
Dialogue: 0,0:08:40.61,0:08:43.33,Default,66,0000,0000,0000,,Cô thủ phạm giết Hughes ạ.
Dialogue: 0,0:08:43.66,0:08:45.17,Default,Maria,0000,0000,0000,,Đó chỉ là hiểu lầm thôi!
Dialogue: 0,0:08:45.17,0:08:46.54,Default,66,0000,0000,0000,,Có thật vậy không?
Dialogue: 0,0:08:46.54,0:08:50.05,Default,66,0000,0000,0000,,Báo chí có nói tin đó đã xác thực rồi mà.
Dialogue: 0,0:08:50.05,0:08:51.17,Default,Maria,0000,0000,0000,,Không thể nào...
Dialogue: 0,0:08:51.59,0:08:55.18,Default,66,0000,0000,0000,,Cô em à, cứ đà này em sẽ phải gánh hết tội lỗi
Dialogue: 0,0:08:55.18,0:08:56.76,Default,66,0000,0000,0000,,và ra pháp trường xử bắn thôi.
Dialogue: 0,0:08:56.76,0:08:57.55,Default,Maria,0000,0000,0000,,Ông đùa đấy à...
Dialogue: 0,0:08:58.26,0:08:59.33,Default,Maria,0000,0000,0000,,Không thể nào...
Dialogue: 0,0:08:59.35,0:09:00.51,Default,Maria,0000,0000,0000,,Nếu họ điều tra kĩ càng hơn...
Dialogue: 0,0:09:01.26,0:09:02.77,Default,66,0000,0000,0000,,Quyết định mau!
Dialogue: 0,0:09:02.77,0:09:06.77,Default,66,0000,0000,0000,,Ngồi ở đây chờ tới ngày "dựa cột" hoặc là đào tẩu cùng ta!
Dialogue: 0,0:09:06.77,0:09:08.10,Default,66,0000,0000,0000,,Cô em có hai lựa chọn đó!
Dialogue: 0,0:09:11.19,0:09:12.40,Default,Maria,0000,0000,0000,,Tàn nhẫn quá...
Dialogue: 0,0:09:13.19,0:09:15.78,Default,Maria,0000,0000,0000,,Tôi chỉ có hai con đường ấy thôi sao?
Dialogue: 0,0:09:15.78,0:09:17.41,Default,Ling,0000,0000,0000,,Có vẻ là như vậy đó.
Dialogue: 0,0:09:20.66,0:09:22.29,Default,Maria,0000,0000,0000,,Trời ơi là trời!
Dialogue: 0,0:09:22.29,0:09:25.62,Default,Maria,0000,0000,0000,,Cha, mẹ, con xin lỗi hai người!
Dialogue: 0,0:09:28.29,0:09:29.42,Default,Maria,0000,0000,0000,,Tôi đi.
Dialogue: 0,0:09:29.75,0:09:31.29,Default,Maria,0000,0000,0000,,Tôi đi là được chứ gì?
Dialogue: 0,0:09:31.29,0:09:32.98,Default,Maria,0000,0000,0000,,Nhớ bảo vệ tôi cho cẩn thận đó,
Dialogue: 0,0:09:32.98,0:09:34.46,Default,Maria,0000,0000,0000,,đồ áo giáp đầu lâu ngu ngốc!
Dialogue: 0,0:09:34.46,0:09:36.68,Default,66,0000,0000,0000,,Ồ, cô em cũng khá đấy.
Dialogue: 0,0:09:37.72,0:09:39.51,Default,Maria,0000,0000,0000,,Phụ nữ cũng phải kiên cường!
Dialogue: 0,0:09:41.01,0:09:41.72,Default,Doug,0000,0000,0000,,Vâng.
Dialogue: 0,0:09:42.31,0:09:44.27,Default,Doug,0000,0000,0000,,Vâng, tôi rõ rồi.
Dialogue: 0,0:09:47.64,0:09:49.69,Default,Doug,0000,0000,0000,,Thông báo cho toàn thành phố.
Dialogue: 0,0:09:49.69,0:09:51.15,Default,Doug,0000,0000,0000,,Maria Ross đã vượt ngục.
Dialogue: 0,0:09:51.65,0:09:53.77,Default,Doug,0000,0000,0000,,Đồng hành cùng cô ta là một quái nhân nguy hiểm.
Dialogue: 0,0:09:53.77,0:09:55.28,Default,Doug,0000,0000,0000,,Mau bắt cô ta lại.
Dialogue: 0,0:09:55.78,0:09:57.03,Default,Doug,0000,0000,0000,,Nếu cô ta chống cự...
Dialogue: 0,0:09:57.95,0:10:00.07,Default,Doug,0000,0000,0000,,Cứ bắn chết ngay tại chỗ!
Dialogue: 0,0:10:06.12,0:10:07.50,Default,Maria,0000,0000,0000,,Ta còn phải chạy đến lúc nào nữa!?
Dialogue: 0,0:10:08.21,0:10:09.42,Default,66,0000,0000,0000,,Cứ trật tự mà chạy đi!
Dialogue: 0,0:10:12.34,0:10:13.59,Default,Both,0000,0000,0000,,Thiếu úy Ross!?
Dialogue: 0,0:10:14.17,0:10:16.51,Default,Maria,0000,0000,0000,,Edward! Alphonse!
Dialogue: 0,0:10:18.76,0:10:20.68,Default,Both,0000,0000,0000,,A! Ngươi là kẻ lúc đó!
Dialogue: 0,0:10:21.09,0:10:22.22,Default,Al,0000,0000,0000,,Cả Ling nữa à!?
Dialogue: 0,0:10:22.22,0:10:23.18,Default,Ling,0000,0000,0000,,Hấy da!
Dialogue: 0,0:10:23.18,0:10:24.72,Default,Ling,0000,0000,0000,,Các cậu đang làm gì vậy?
Dialogue: 0,0:10:24.22,0:10:25.85,Default-alt,Ed,0000,0000,0000,,Câu đó phải là của bọn này mới đúng!
Dialogue: 0,0:10:27.43,0:10:28.52,Default,66,0000,0000,0000,,Chúng ta không thừa thời gian đâu!
Dialogue: 0,0:10:30.10,0:10:31.23,Default,Ed,0000,0000,0000,,Cái đồ...
Dialogue: 0,0:10:31.65,0:10:35.23,Default,66,0000,0000,0000,,Cô em, chạy theo hẻm đó để tới khu nhà kho đi!
Dialogue: 0,0:10:35.23,0:10:37.24,Default,66,0000,0000,0000,,Khu đó rất tối, chạy thoát được đó!
Dialogue: 0,0:10:37.24,0:10:40.11,Default,Ed,0000,0000,0000,,Thiếu úy Ross, chuyện Thiếu tá Hughes thì sao...
Dialogue: 0,0:10:40.11,0:10:43.20,Default,66,0000,0000,0000,,Nhanh lên! Bị quân đội tìm thấy là ra bã cả đấy!
Dialogue: 0,0:10:43.91,0:10:45.04,Default,Ed,0000,0000,0000,,Thiếu úy Ross!
Dialogue: 0,0:10:45.04,0:10:46.29,Default,66,0000,0000,0000,,Cấm đuổi theo!
Dialogue: 0,0:10:46.29,0:10:47.41,Default,Al,0000,0000,0000,,Thiếu úy!
Dialogue: 0,0:10:47.41,0:10:49.25,Default,Al,0000,0000,0000,,Thiếu úy Ross!
Dialogue: 0,0:11:04.35,0:11:06.60,Default,Roy,0000,0000,0000,,Cô là Maria Ross phải không?
Dialogue: 0,0:11:13.56,0:11:14.77,Default,Ed,0000,0000,0000,,Cái gì vậy!?
Dialogue: 0,0:11:14.77,0:11:16.57,Default,66,0000,0000,0000,,Ối chà, xong rồi hả?
Dialogue: 0,0:11:16.57,0:11:17.57,Default,66,0000,0000,0000,,Này!
Dialogue: 0,0:11:17.57,0:11:18.74,Default,66,0000,0000,0000,,Đứng lại!
Dialogue: 0,0:11:20.03,0:11:21.74,Default,66,0000,0000,0000,,Úi cha!
Dialogue: 0,0:11:21.91,0:11:23.66,Default,66,0000,0000,0000,,Ta đi thôi, mắt hí!
Dialogue: 0,0:11:23.66,0:11:24.74,Default,Ling,0000,0000,0000,,Vâng~
Dialogue: 0,0:11:25.20,0:11:27.74,Default,Al,0000,0000,0000,,Ling! Tại sao cậu lại đi cùng với hắn!?
Dialogue: 0,0:11:27.74,0:11:29.50,Default,Ling,0000,0000,0000,,Hẹn lúc sau nói chuyện nhé!
Dialogue: 0,0:11:31.04,0:11:32.50,Default,Al,0000,0000,0000,,Thật là...
Dialogue: 0,0:11:39.80,0:11:41.51,Default,Roy,0000,0000,0000,,Chào cậu, Cang.
Dialogue: 0,0:11:47.64,0:11:49.02,Default,Ed,0000,0000,0000,,Thế này là thế nào...
Dialogue: 0,0:11:49.93,0:11:52.69,Default,Ed,0000,0000,0000,,Thế này là thế nào hả, Đại tá!?
Dialogue: 0,0:12:10.20,0:12:11.54,Default,Ed,0000,0000,0000,,Tại sao...
Dialogue: 0,0:12:13.50,0:12:15.04,Default,Ed,0000,0000,0000,,Thiếu tá Hughes bị...
Dialogue: 0,0:12:16.13,0:12:18.04,Default,Ed,0000,0000,0000,,Tại sao Thiếu úy Ross lại...
Dialogue: 0,0:12:18.42,0:12:19.84,Default,Ed,0000,0000,0000,,Tại sao anh không nói với tôi ngay từ đầu!?
Dialogue: 0,0:12:26.14,0:12:28.10,Default,Roy,0000,0000,0000,,Dám tấn công thượng cấp hả?
Dialogue: 0,0:12:28.56,0:12:30.27,Default,Roy,0000,0000,0000,,Biết thân biết phận một chút đi!
Dialogue: 0,0:12:39.77,0:12:41.19,Default,Al,0000,0000,0000,,Đừng mà, anh hai!
Dialogue: 0,0:12:41.19,0:12:42.19,Default,Ed,0000,0000,0000,,Bỏ anh ra mau, Al!
Dialogue: 0,0:12:42.19,0:12:43.57,Default,Al,0000,0000,0000,,Không được!
Dialogue: 0,0:12:43.57,0:12:45.99,Default,Ed,0000,0000,0000,,Tên khốn này vừa giết Thiếu úy Ross đấy!
Dialogue: 0,0:12:45.99,0:12:46.78,Default,Al,0000,0000,0000,,Thiếu úy Ross?
Dialogue: 0,0:12:51.12,0:12:53.46,Default,Al,0000,0000,0000,,Tại sao lại như thế, Đại tá!?
Dialogue: 0,0:12:54.83,0:12:58.50,Default,Roy,0000,0000,0000,,Có lệnh cho phép bắn chết tội nhân vượt ngục Maria Ross ngay tại chỗ.
Dialogue: 0,0:12:59.88,0:13:00.75,Default,Roy,0000,0000,0000,,Chuyện chỉ có vậy thôi.
Dialogue: 0,0:13:00.75,0:13:02.38,Default,Al,0000,0000,0000,,"Chỉ có vậy" là thế nào!?
Dialogue: 0,0:13:02.38,0:13:05.97,Default,Roy,0000,0000,0000,,Tôi xin lỗi vì đã không nói cho các cậu về cái chết của Hughes.
Dialogue: 0,0:13:07.22,0:13:09.20,Default,Roy,0000,0000,0000,,Nhưng đừng có kháng lệnh.
Dialogue: 0,0:13:09.77,0:13:11.26,Default,Roy,0000,0000,0000,,Đừng có đòi tôi giải thích.
Dialogue: 0,0:13:12.10,0:13:13.27,Default,Roy,0000,0000,0000,,Cứ ngoan ngoãn phục tùng đi.
Dialogue: 0,0:13:13.89,0:13:15.52,Default,Roy,0000,0000,0000,,Quân nhân là phải như vậy đấy!
Dialogue: 0,0:13:26.11,0:13:27.78,Default,Doug,0000,0000,0000,,Đại tá Mustang.
Dialogue: 0,0:13:28.62,0:13:31.24,Default,Doug,0000,0000,0000,,Mau giải thích cho tôi nghe.
Dialogue: 0,0:13:32.91,0:13:36.62,Default,Roy,0000,0000,0000,,Đã có lệnh cho phép bắn chết phạm nhân nếu cô ta kháng cự.
Dialogue: 0,0:13:37.42,0:13:39.54,Default,Roy,0000,0000,0000,,Cô ta chống lại nên bị tôi giết thôi.
Dialogue: 0,0:13:41.71,0:13:44.51,Default,Doug,0000,0000,0000,,Nghe nói Chuẩn tướng là bạn thân của anh thì phải.
Dialogue: 0,0:13:45.22,0:13:45.97,Default,Roy,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:13:47.26,0:13:48.43,Default,Roy,0000,0000,0000,,Cậu ấy là người rất tốt.
Dialogue: 0,0:13:49.89,0:13:54.06,Default,Doug,0000,0000,0000,,Không phải anh ra lệnh cho thủ hạ thả cô ta ra ngoài đấy chứ?
Dialogue: 0,0:13:54.06,0:13:55.23,Default,Roy,0000,0000,0000,,Tôi ư?
Dialogue: 0,0:13:55.52,0:13:56.18,Default,Roy,0000,0000,0000,,Tại sao chứ?
Dialogue: 0,0:13:56.64,0:13:57.44,Default,Doug,0000,0000,0000,,Tại sao ấy hả?
Dialogue: 0,0:13:58.98,0:14:02.27,Default,Doug,0000,0000,0000,,Để anh có thể tự tay đốt cô ta ra tro chứ sao.
Dialogue: 0,0:14:06.07,0:14:08.78,Default,Roy,0000,0000,0000,,Tôi mong ngài đừng suy diễn lung tung như vậy.
Dialogue: 0,0:14:18.04,0:14:22.54,Default,Arm,0000,0000,0000,,Tôi rất xin lỗi vì đã giấu các cậu chuyện về Chuẩn tướng Hughes.
Dialogue: 0,0:14:25.38,0:14:26.80,Default,Ed,0000,0000,0000,,Vì tôi mà...
Dialogue: 0,0:14:30.09,0:14:31.72,Default,Arm,0000,0000,0000,,Đừng quá đau buồn.
Dialogue: 0,0:14:32.68,0:14:34.43,Default,Arm,0000,0000,0000,,Đây không phải lỗi của cậu đâu.
Dialogue: 0,0:14:36.64,0:14:38.10,Default,Nox,0000,0000,0000,,Đã tới cả rồi đấy à.
Dialogue: 0,0:14:39.02,0:14:40.35,Default,Arm,0000,0000,0000,,Bác sĩ Nox...
Dialogue: 0,0:14:41.35,0:14:44.36,Default,Nox,0000,0000,0000,,Diện tích tổn thương quá lớn.
Dialogue: 0,0:14:44.36,0:14:47.88,Default,Nox,0000,0000,0000,,Nhưng dựa trên vết nứt ở răng,
Dialogue: 0,0:14:47.88,0:14:49.86,Default,Nox,0000,0000,0000,,chúng tôi khẳng định cô ta là Maria Ross.
Dialogue: 0,0:14:50.78,0:14:52.70,Default,Nox,0000,0000,0000,,Tàn độc quá đấy.
Dialogue: 0,0:14:52.70,0:14:56.33,Default,Nox,0000,0000,0000,,Đốt một cô gái xinh đẹp thành tro như vậy...
Dialogue: 0,0:14:57.91,0:15:02.00,Default,Nox,0000,0000,0000,,Chắc anh căm hận cô ta lắm phải không, ngài Mustang?
Dialogue: 0,0:15:05.50,0:15:07.84,Default,Nox,0000,0000,0000,,Được trả thù cho bạn mình như vậy đã thỏa mãn chưa?
Dialogue: 0,0:15:12.05,0:15:14.16,Default,Nox,0000,0000,0000,,Anh hùng của Nội Chiến Ishval
Dialogue: 0,0:15:14.16,0:15:16.95,Default,Nox,0000,0000,0000,,mà ra tay không thương tiếc với một cô gái nhỏ như vậy,
Dialogue: 0,0:15:16.95,0:15:18.18,Default,Nox,0000,0000,0000,,tôi ghê tởm anh đó.
Dialogue: 0,0:15:23.19,0:15:24.42,Default,Arm,0000,0000,0000,,Đại tá.
Dialogue: 0,0:15:25.07,0:15:28.61,Default,Arm,0000,0000,0000,,Tôi không biết phải tạ lỗi thế nào vì những gì thuộc hạ của tôi gây ra.
Dialogue: 0,0:15:29.82,0:15:33.62,Default,Arm,0000,0000,0000,,Tôi thật không ngờ Thiếu úy Ross lại là kẻ giết người...
Dialogue: 0,0:15:34.37,0:15:38.08,Default,Arm,0000,0000,0000,,Cô ấy là người thành thật, chăm chỉ...
Dialogue: 0,0:15:39.62,0:15:41.21,Default,Arm,0000,0000,0000,,Và vô cùng chu đáo...
Dialogue: 0,0:15:54.34,0:15:56.85,Default,Roy,0000,0000,0000,,Xem ra ông mệt mỏi quá rồi, Thiếu tá ạ.
Dialogue: 0,0:15:57.35,0:15:58.51,Default,Roy,0000,0000,0000,,Sao ông không nghỉ một thời gian đi?
Dialogue: 0,0:16:00.35,0:16:03.52,Default,Roy,0000,0000,0000,,Bộ tư lệnh phía Đông, chỗ tôi ngày trước ấy, cũng hay lắm.
Dialogue: 0,0:16:04.56,0:16:06.59,Default,Roy,0000,0000,0000,,Nơi đó không xô bồ như chốn thị thành,
Dialogue: 0,0:16:07.14,0:16:08.69,Default,Roy,0000,0000,0000,,và nhất là có rất nhiều cô gái xinh đẹp.
Dialogue: 0,0:16:16.99,0:16:22.50,Default,Envy,0000,0000,0000,,Và thế là Mustang đã trả thù được cho người bạn thân nhất.
Dialogue: 0,0:16:23.04,0:16:25.08,Default,Envy,0000,0000,0000,,Mọi người cùng hạnh phúc cho tới mãi về sau.
Dialogue: 0,0:16:25.08,0:16:27.04,Default,Lust,0000,0000,0000,,Cậu có hơi bất cẩn quá không vậy.
Dialogue: 0,0:16:27.42,0:16:30.80,Default,Lust,0000,0000,0000,,Mục đích của vụ lần này là dỗ ngọt ngài Đại tá phải không?
Dialogue: 0,0:16:31.80,0:16:33.47,Default,Envy,0000,0000,0000,,Ai mà quan tâm chứ?
Dialogue: 0,0:16:33.47,0:16:35.84,Default,Envy,0000,0000,0000,,Con chó đã đớp mồi rồi.
Dialogue: 0,0:16:37.05,0:16:40.35,Default,Envy,0000,0000,0000,,Và xem ra hắn đã khiến dư luận bất bình ghê gớm.
Dialogue: 0,0:16:40.81,0:16:43.35,Default,Envy,0000,0000,0000,,Ngay đến thuộc hạ cũng sẽ căm hận hắn cho mà xem.
Dialogue: 0,0:16:45.23,0:16:46.23,Default,Roy,0000,0000,0000,,Cái gì đây?
Dialogue: 0,0:16:47.02,0:16:48.48,Default,Hawk,0000,0000,0000,,Đơn xin nghỉ phép ạ.
Dialogue: 0,0:16:48.48,0:16:49.82,Default,Roy,0000,0000,0000,,Vào ngay lúc này à?
Dialogue: 0,0:16:50.36,0:16:51.36,Default,Hawk,0000,0000,0000,,Có vấn đề gì sao ạ?
Dialogue: 0,0:16:52.07,0:16:53.39,Default,Roy,0000,0000,0000,,Không, chẳng sao cả.
Dialogue: 0,0:16:53.79,0:16:54.49,Default,Roy,0000,0000,0000,,Tôi đồng ý.
Dialogue: 0,0:16:55.03,0:16:56.28,Default,Hawk,0000,0000,0000,,Cảm ơn ngài.
Dialogue: 0,0:17:11.50,0:17:13.51,Default,Fal,0000,0000,0000,,Cái đồ ngu nhà ông!
Dialogue: 0,0:17:13.51,0:17:14.68,Default,Fal,0000,0000,0000,,Sao ông lại ra khỏi chỗ này!?
Dialogue: 0,0:17:14.68,0:17:16.76,Default,Fal,0000,0000,0000,,Đại tá mà biết thì cái mạng của tôi nó ra sao đây!
Dialogue: 0,0:17:17.18,0:17:20.51,Default,66,0000,0000,0000,,Lúc ta quay về đâu có ai nhìn thấy.
Dialogue: 0,0:17:20.51,0:17:22.52,Default,Fal,0000,0000,0000,,Vấn đề không đơn giản vậy đâu!
Dialogue: 0,0:17:23.02,0:17:26.19,Default,66,0000,0000,0000,,Anh bạn là một quân nhân tội nghiệp
Dialogue: 0,0:17:26.20,0:17:29.02,Default,66,0000,0000,0000,,bị tội phạm khống chế mà, đừng lo.
Dialogue: 0,0:17:29.69,0:17:30.48,Default,Fal,0000,0000,0000,,Hả!?
Dialogue: 0,0:17:32.69,0:17:35.32,Default,66,0000,0000,0000,,Yo, nhóc đang làm gì thế?
Dialogue: 0,0:17:35.32,0:17:36.57,Default,Ling,0000,0000,0000,,Tôi gửi tín hiệu ấy mà.
Dialogue: 0,0:17:36.57,0:17:37.74,Default,66,0000,0000,0000,,Tín hiệu?
Dialogue: 0,0:17:37.74,0:17:41.99,Default,Fal,0000,0000,0000,,Mà đấy, lại còn đem người lạ về là thế nào hả!?
Dialogue: 0,0:17:41.99,0:17:44.66,Default,Fuu,0000,0000,0000,,Thiếu chủ! Chúng tôi tìm ngài mãi!
Dialogue: 0,0:17:44.66,0:17:47.04,Default,Ling,0000,0000,0000,,Ái chà, lẹ thật đấy.
Dialogue: 0,0:17:47.04,0:17:48.25,Default,66,0000,0000,0000,,Lại thêm người nữa kìa.
Dialogue: 0,0:17:53.50,0:17:56.09,Default,Roy,0000,0000,0000,,Chào em, Elizabeth! Dạo này khỏe không?
Dialogue: 0,0:17:56.09,0:17:58.38,Rad,Eliza,0000,0000,0000,,Cảm ơn anh lúc nào cũng gọi điện hỏi thăm em.
Dialogue: 0,0:17:58.38,0:17:59.76,Rad,Eliza,0000,0000,0000,,Nhưng anh bỏ việc như vậy,
Dialogue: 0,0:17:59.76,0:18:02.22,Rad,Eliza,0000,0000,0000,,không sợ bị cô trợ lý hung dữ ấy mắng mỏ sao?
Dialogue: 0,0:18:02.22,0:18:04.35,Default,Roy,0000,0000,0000,,Không sao đâu mà!
Dialogue: 0,0:18:04.38,0:18:05.73,Default,Roy,0000,0000,0000,,Cô ta đi nghỉ phép rồi em ạ.
Dialogue: 0,0:18:06.27,0:18:09.35,Default,Eliza,0000,0000,0000,,Thế nên anh mới có thể gọi điện cho em được chứ.
Dialogue: 0,0:18:10.94,0:18:11.90,Default,Guy,0000,0000,0000,,Thấy không?
Dialogue: 0,0:18:11.90,0:18:15.78,Default,Guy2,0000,0000,0000,,Trung úy vừa rời đi là lại chứng nào tật nấy.
Dialogue: 0,0:18:16.44,0:18:18.36,Default,Guy,0000,0000,0000,,Trung úy đúng là...
Dialogue: 0,0:18:18.74,0:18:20.66,Default,Guy2,0000,0000,0000,,Cô vú em của cái con người này...
Dialogue: 0,0:18:20.66,0:18:22.20,Default,Roy,0000,0000,0000,,Đúng rồi!
Dialogue: 0,0:18:22.62,0:18:25.50,Default,Roy,0000,0000,0000,,Từ khi lên đây anh chẳng mấy khi được rảnh cả.
Dialogue: 0,0:18:25.50,0:18:27.66,Default,Roy,0000,0000,0000,,Chắc sắp tới anh cũng phải xin nghỉ phép thôi.
Dialogue: 0,0:18:27.66,0:18:30.67,Rad,Eliza,0000,0000,0000,,Ồ, anh định đi đâu vậy?
Dialogue: 0,0:18:30.67,0:18:33.00,Default,Roy,0000,0000,0000,,Dạo này anh nghiện câu cá rồi.
Dialogue: 0,0:18:34.38,0:18:35.55,Default,Roy,0000,0000,0000,,Em muốn đi cùng anh không?
Dialogue: 0,0:18:45.93,0:18:46.64,Default,Ed,0000,0000,0000,,Vâng.
Dialogue: 0,0:18:47.31,0:18:48.43,Default,Ed,0000,0000,0000,,Ai đấy ạ...
Dialogue: 0,0:18:53.56,0:18:56.53,Default,Ed,0000,0000,0000,,Sao tự nhiên ông lại đấm tôi hả, Thiếu tá!?
Dialogue: 0,0:18:57.24,0:18:59.28,Default,Arm,0000,0000,0000,,Edward Elric.
Dialogue: 0,0:19:03.03,0:19:03.91,Default,Arm,0000,0000,0000,,Không xong rồi.
Dialogue: 0,0:19:03.91,0:19:06.24,Default,Arm,0000,0000,0000,,Automail của cậu đã bị hỏng.
Dialogue: 0,0:19:06.24,0:19:07.29,Default,Ed,0000,0000,0000,,Hả?
Dialogue: 0,0:19:07.29,0:19:10.21,Default,Arm,0000,0000,0000,,Đúng vậy. Vấn đề này nghiêm trọng lắm.
Dialogue: 0,0:19:10.21,0:19:12.04,Default,Arm,0000,0000,0000,,Ta phải đưa cậu đi sửa chữa ngay lập tức.
Dialogue: 0,0:19:13.17,0:19:16.34,Default,Arm,0000,0000,0000,,Tôi sẽ hộ tống cậu tới Resembool.
Dialogue: 0,0:19:16.34,0:19:18.17,Default,Ed,0000,0000,0000,,À, ông này...
Dialogue: 0,0:19:18.17,0:19:19.34,Default,Winry,0000,0000,0000,,Gì thế, gì thế?
Dialogue: 0,0:19:19.34,0:19:21.30,Default,Al,0000,0000,0000,,Ta lại về Resembool hả?
Dialogue: 0,0:19:21.30,0:19:23.80,Default,Ed,0000,0000,0000,,Al ơi, nghe anh nói nè...
Dialogue: 0,0:19:23.80,0:19:25.67,Default,Arm,0000,0000,0000,,Alphonse Elric.
Dialogue: 0,0:19:25.67,0:19:29.18,Default,Arm,0000,0000,0000,,Cậu dễ thu hút sự chú ý quá, hãy ở lại Central đi.
Dialogue: 0,0:19:30.10,0:19:32.23,Default,Arm,0000,0000,0000,,Xong rồi! Mau chuẩn bị lên tàu thôi.
Dialogue: 0,0:19:32.23,0:19:34.56,Default,Arm,0000,0000,0000,,Ta đi nào, Edward Elric!
Dialogue: 0,0:19:38.53,0:19:41.78,Default,Ed,0000,0000,0000,,Ông thôi đi có được không, Thiếu tá?
Dialogue: 0,0:19:42.16,0:19:44.12,Default,Arm,0000,0000,0000,,Không thể được.
Dialogue: 0,0:19:44.12,0:19:45.95,Default,Arm,0000,0000,0000,,Vì đây cũng là mệnh lệnh.
Dialogue: 0,0:19:47.95,0:19:49.45,Default,Arm,0000,0000,0000,,Từ người đó...
Dialogue: 0,0:19:51.29,0:19:53.25,Default,Guy,0000,0000,0000,,Vâng, tôi hiểu rồi.
Dialogue: 0,0:19:54.38,0:19:57.96,Default,Guy,0000,0000,0000,,Thiếu tá Armstrong và Edward Elric vừa mới lên tàu ạ.
Dialogue: 0,0:19:58.59,0:19:59.63,Default,Roy,0000,0000,0000,,Tôi biết rồi.
Dialogue: 0,0:20:02.51,0:20:04.72,Think,Roy,0000,0000,0000,,Bây giờ không còn chướng ngại gì nữa.
Dialogue: 0,0:20:11.73,0:20:16.11,Default,Envy,0000,0000,0000,,Tôi vừa hỏi được một nhân chứng nhìn thấy kẻ phá nhà lao.
Dialogue: 0,0:20:16.11,0:20:18.86,Default,Envy,0000,0000,0000,,Và đây là hình dạng của hắn.
Dialogue: 0,0:20:19.44,0:20:21.36,Default,Lust,0000,0000,0000,,Ồ, hắn vẫn sống hả?
Dialogue: 0,0:20:22.28,0:20:24.36,Default,Lust,0000,0000,0000,,Không hiểu hắn có mưu đồ gì cùng Đại tá Lửa không đây?
Dialogue: 0,0:20:24.36,0:20:25.66,Default,Envy,0000,0000,0000,,Ai mà biết được?
Dialogue: 0,0:20:25.66,0:20:28.12,Default,Envy,0000,0000,0000,,Nhưng rất có khả năng chúng móc nối với nhau.
Dialogue: 0,0:20:28.12,0:20:29.62,Default,Lust,0000,0000,0000,,Hắn đã chạy đi đâu rồi?
Dialogue: 0,0:20:30.58,0:20:34.54,Default,Envy,0000,0000,0000,,À, hắn chạy nhanh lắm, mà lại giỏi lẩn trốn nữa...
Dialogue: 0,0:20:34.54,0:20:36.83,Default,Lust,0000,0000,0000,,Vòng vo mãi, cậu không biết chứ gì?
Dialogue: 0,0:20:36.83,0:20:37.88,Default,Lust,0000,0000,0000,,Kém cỏi quá đấy.
Dialogue: 0,0:20:37.88,0:20:39.92,Default,Envy,0000,0000,0000,,Im đi bà.
Dialogue: 0,0:20:39.92,0:20:41.42,Default,Envy,0000,0000,0000,,Bọn này đang thiếu nhân lực chứ bộ.
Dialogue: 0,0:20:41.42,0:20:42.51,Default,Lust,0000,0000,0000,,Nhân lực à?
Dialogue: 0,0:20:44.68,0:20:46.80,Default,Lust,0000,0000,0000,,Chỉ cần có hắn thôi là đủ.
Dialogue: 0,0:20:49.22,0:20:53.18,Default,Lust,0000,0000,0000,,Nào, tới lượt ngươi rồi đó, Đồ Tể Barry.
Dialogue: 0,0:21:00.19,0:21:03.95,Default,Nar,0000,0000,0000,,Sự thật tất cả đều nằm ở Xerxes.
Dialogue: 0,0:21:04.82,0:21:07.95,Default,Nar,0000,0000,0000,,Những người ngụ trong thành phố hoang tàn đổ nát...
Dialogue: 0,0:21:07.95,0:21:10.91,Default,Nar,0000,0000,0000,,đã làm sáng tỏ nghi vấn trong lòng cậu thiếu niên.
Dialogue: 0,0:21:11.70,0:21:16.04,Default,Nar,0000,0000,0000,,Lần tới, Cang Giả Kim Thuật Sư - Fullmetal Alchemist:
