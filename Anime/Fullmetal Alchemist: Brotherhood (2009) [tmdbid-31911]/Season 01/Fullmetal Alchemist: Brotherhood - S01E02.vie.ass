Dialogue: 1,0:00:55.49,0:00:58.50,Title - TS,Nar,0000,0000,0000,,{\fs80\pos(640,552)}Ngày Bắt Đầu Tất Cả
Dialogue: 1,0:00:55.49,0:00:58.50,Credit,Nar,0000,0000,0000,,Subbed by BLACK - ATeam
Dialogue: 0,0:00:58.57,0:01:02.49,Stock,Mom,0000,0000,0000,,{\fad(500,0)\fnUVN Bach Tuyet\fs50}10 năm trước     Resembool
Dialogue: 0,0:00:59.45,0:01:02.49,Default,Mom,0000,0000,0000,,Ed, Al, các con đâu rồi?
Dialogue: 0,0:01:03.16,0:01:04.00,Default,Mom,0000,0000,0000,,Thật là...
Dialogue: 0,0:01:04.62,0:01:07.50,Default,Mom,0000,0000,0000,,Lại bày bừa trong phòng bố rồi.
Dialogue: 0,0:01:08.13,0:01:10.96,Default,Mom,0000,0000,0000,,Không được đâu con, sao lại vẽ bậy lên sàn nhà thế.
Dialogue: 0,0:01:11.46,0:01:12.63,Default,Ed,0000,0000,0000,,Con không vẽ bậy đâu.
Dialogue: 0,0:01:12.96,0:01:14.17,Default,Ed,0000,0000,0000,,Mẹ xem này!
Dialogue: 0,0:01:16.63,0:01:18.84,Default,Mom,0000,0000,0000,,Đó là... giả kim thuật phải không?
Dialogue: 0,0:01:20.51,0:01:22.01,Default,Mom,0000,0000,0000,,Là bố dạy cho con đấy à?
Dialogue: 0,0:01:22.01,0:01:24.56,Default,Ed,0000,0000,0000,,Người không bao giờ ở nhà làm sao mà dạy con được?
Dialogue: 0,0:01:24.56,0:01:26.81,Default,Al,0000,0000,0000,,Cái này có trong sách bọn con đọc đấy chứ.
Dialogue: 0,0:01:26.81,0:01:28.23,Default,Mom,0000,0000,0000,,Trong sách à...
Dialogue: 0,0:01:30.44,0:01:32.23,Default,Ed,0000,0000,0000,,Bọn con làm sai rồi ạ?
Dialogue: 0,0:01:32.23,0:01:33.23,Default,Mom,0000,0000,0000,,Đương nhiên là không rồi!
Dialogue: 0,0:01:33.57,0:01:36.28,Default,Mom,0000,0000,0000,,Giỏi lắm! Đúng là con của bố có khác!
Dialogue: 0,0:01:36.28,0:01:38.11,Default,Mom,0000,0000,0000,,Mẹ phải đi khoe với hàng xóm mới được!
Dialogue: 0,0:01:39.41,0:01:41.41,Think,Ed,0000,0000,0000,,Mẹ đã ngợi khen chúng tôi.
Dialogue: 0,0:01:41.41,0:01:45.12,Think,Ed,0000,0000,0000,,Điều ấy khiến chúng tôi hạnh phúc, và bắt đầu lao vào học giả kim thuật.
Dialogue: 0,0:01:46.25,0:01:48.50,Think,Ed,0000,0000,0000,,Thế nhưng... vào mùa hè năm ấy...
Dialogue: 0,0:01:48.87,0:01:53.13,Think,Ed,0000,0000,0000,,Mẹ chúng tôi đã qua đời vì dịch bệnh.
Dialogue: 0,0:01:55.26,0:01:58.18,Default,Al,0000,0000,0000,,Anh ơi... em đói quá.
Dialogue: 0,0:02:00.47,0:02:03.14,Default,Al,0000,0000,0000,,Lạnh rồi. Mình về thôi...
Dialogue: 0,0:02:05.22,0:02:07.10,Default,Al,0000,0000,0000,,Giá mà bố quay về...
Dialogue: 0,0:02:07.10,0:02:08.60,Default,Ed,0000,0000,0000,,Đừng có nhắc đến lão ấy!
Dialogue: 0,0:02:09.39,0:02:11.48,Default,Ed,0000,0000,0000,,Lão đâu phải bố chúng ta!
Dialogue: 0,0:02:11.48,0:02:14.40,Default,Ed,0000,0000,0000,,Lão còn chẳng thèm về dự đám tang mẹ nữa.
Dialogue: 0,0:02:22.62,0:02:25.37,Default,Ed,0000,0000,0000,,Mình có thể hồi sinh được mẹ không nhỉ...
Dialogue: 0,0:02:25.99,0:02:30.71,Default,Al,0000,0000,0000,,Nhưng trong sách nói chuyển hóa cơ thể người là điều cấm kị mà.
Dialogue: 0,0:02:30.71,0:02:33.50,Default,Ed,0000,0000,0000,,Vì thế... đây sẽ là bí mật của riêng chúng ta thôi nhé?
Dialogue: 0,0:02:34.46,0:02:36.30,Default,Winry,0000,0000,0000,,Hai cậu lại ngồi đây à.
Dialogue: 0,0:02:36.30,0:02:38.22,Default,Ed,0000,0000,0000,,Muốn gì hả, Winry?
Dialogue: 0,0:02:38.22,0:02:42.62,Default,Winry,0000,0000,0000,,Bà bảo nếu cậu cứ mãi khóc thương người đã mất...
Dialogue: 0,0:02:42.62,0:02:46.43,Default,Winry,0000,0000,0000,,thì trên trời người ấy lại càng đau khổ hơn đấy.
Dialogue: 0,0:02:47.43,0:02:48.93,Default,Ed,0000,0000,0000,,Bọn tớ có khóc đâu!
Dialogue: 0,0:02:51.60,0:02:57.33,Default,Ed,0000,0000,0000,,Cậu mới là cái đứa suốt ngày mít ướt\Nvì bố mẹ không về nhà bao giờ!
Dialogue: 0,0:02:57.90,0:02:59.19,Default,Winry,0000,0000,0000,,Tớ không khóc đâu nhé!
Dialogue: 0,0:02:59.40,0:03:01.82,Default,Ed,0000,0000,0000,,Thật không?
Dialogue: 0,0:03:01.82,0:03:03.91,Default,Winry,0000,0000,0000,,Không thèm lo cho các cậu nữa!
Dialogue: 0,0:03:03.91,0:03:06.54,Default,Winry,0000,0000,0000,,Nếu về chậm hơn tớ là các cậu không được ăn lót dạ đâu!
Dialogue: 0,0:03:06.54,0:03:09.16,Default,Ed,0000,0000,0000,,Sao lại thế? Chờ tí đã nào!
Dialogue: 0,0:03:09.16,0:03:11.58,Default,Al,0000,0000,0000,,Chờ em với!
Dialogue: 0,0:03:11.58,0:03:13.83,Default,All,0000,0000,0000,,Mời cả nhà dùng bữa!
Dialogue: 0,0:03:15.59,0:03:18.09,Default,Gran,0000,0000,0000,,Nào Ed, cháu cũng phải uống sữa đi.
Dialogue: 0,0:03:19.34,0:03:21.01,Default,Ed,0000,0000,0000,,Cháu ghét sữa.
Dialogue: 0,0:03:21.01,0:03:23.09,Default,Gran,0000,0000,0000,,Cháu mà không uống là lùn cả đời đấy.
Dialogue: 0,0:03:23.09,0:03:24.72,Default,Ed,0000,0000,0000,,Bà bảo ai là lùn hả, bà già lùn!
Dialogue: 0,0:03:24.72,0:03:26.72,Default,Gran,0000,0000,0000,,Dám láo hả thằng lỏi còi cọc!
Dialogue: 0,0:03:26.89,0:03:28.18,Default,Ed,0000,0000,0000,,Đồ bà già mini!
Dialogue: 0,0:03:28.18,0:03:29.22,Default,Gran,0000,0000,0000,,Thằng lùn siêu cấp!
Dialogue: 0,0:03:29.22,0:03:30.23,Default,Ed,0000,0000,0000,,Bà bé như con kiến!
Dialogue: 0,0:03:30.23,0:03:31.60,Default,Gran,0000,0000,0000,,Mày thì như con bọ chét!
Dialogue: 0,0:03:34.86,0:03:37.65,Default,Winry,0000,0000,0000,,Các cậu lại đọc sách lén trong giờ học rồi...
Dialogue: 0,0:03:37.65,0:03:39.53,Default,Winry,0000,0000,0000,,Phải chú ý nghe lời thầy cô giảng chứ.
Dialogue: 0,0:03:39.53,0:03:41.28,Default,Ed,0000,0000,0000,,Nhiều chuyện thế nhỉ.
Dialogue: 0,0:03:41.28,0:03:43.11,Default,Winry,0000,0000,0000,,Thế các cậu đọc sách gì vậy?
Dialogue: 0,0:03:43.11,0:03:44.36,Default,Al,0000,0000,0000,,Bí mật.
Dialogue: 0,0:03:44.36,0:03:46.62,Default,Ed,0000,0000,0000,,Không liên quan đến cậu đâu, Winry.
Dialogue: 0,0:03:46.62,0:03:49.41,Default,Winry,0000,0000,0000,,Xấu tính thế! Hai người lúc nào cũng bí mật, bí mật!
Dialogue: 0,0:03:50.83,0:03:51.79,Default,Al,0000,0000,0000,,Chào nhé!
Dialogue: 0,0:03:54.83,0:03:58.63,Default,Winry,0000,0000,0000,,Ed! Al! Tối nay có món hầm đấy!
Dialogue: 0,0:03:58.63,0:04:00.17,Default,Al,0000,0000,0000,,Tuyệt vời!
Dialogue: 0,0:04:00.17,0:04:02.47,Default,Ed,0000,0000,0000,,Rồi. Lát nữa gặp lại nhé!
Dialogue: 0,0:04:03.38,0:04:06.47,Default,Ed,0000,0000,0000,,Người sáng tạo ra món hầm đúng là quá siêu.
Dialogue: 0,0:04:06.93,0:04:09.18,Default,Ed,0000,0000,0000,,Trong món đó có sữa mà sao ngon thế nhỉ.
Dialogue: 0,0:04:09.18,0:04:10.35,Default,Al,0000,0000,0000,,Anh nói gì vậy?
Dialogue: 0,0:04:10.35,0:04:14.06,Default,Ed,0000,0000,0000,,Ý tưởng thêm sữa vào súp rau quả thực rất đáng ngưỡng mộ.
Dialogue: 0,0:04:14.90,0:04:18.27,Default,Ed,0000,0000,0000,,Người làm khoa học đôi lúc cũng phải thay đổi\Ncách nghĩ một cách mạnh bạo như thế.
Dialogue: 0,0:04:18.27,0:04:19.82,Default,Al,0000,0000,0000,,Thế à...
Dialogue: 0,0:04:19.82,0:04:21.23,Default,Ed,0000,0000,0000,,Đúng vậy!
Dialogue: 0,0:04:21.23,0:04:24.82,Default,Ed,0000,0000,0000,,Việc chuyển hóa cơ thể người cũng cần những gì táo bạo như thế!
Dialogue: 0,0:04:27.03,0:04:31.29,Think,Ed,0000,0000,0000,,Từ đó, để có thể hồi sinh được mẹ...
Dialogue: 0,0:04:31.29,0:04:33.87,Think,Ed,0000,0000,0000,,chúng tôi bắt đầu nghiên cứu chuyển hóa cơ thể người...
Dialogue: 0,0:04:33.87,0:04:38.08,Think,Ed,0000,0000,0000,,và rèn giũa thuật giả kim với sư phụ.
Dialogue: 0,0:04:38.59,0:04:40.84,Think,Ed,0000,0000,0000,,Có thể sẽ phải qua rất nhiều năm tháng, nhưng...
Dialogue: 0,0:04:40.84,0:04:43.22,Think,Ed,0000,0000,0000,,"Chúng tôi muốn gặp lại khuôn mặt vui tươi của mẹ".
Dialogue: 0,0:04:43.22,0:04:45.55,Think,Ed,0000,0000,0000,,"Chúng tôi vẫn muốn hạnh phúc sống bên mẹ".
Dialogue: 0,0:04:45.88,0:04:48.26,Think,Ed,0000,0000,0000,,Với những nguyện ước đó trong tim, chúng tôi...
Dialogue: 0,0:04:59.65,0:05:00.61,Default,Ed,0000,0000,0000,,Xong rồi.
Dialogue: 0,0:05:02.98,0:05:04.99,Default,Ed,0000,0000,0000,,Nước, 35 lít.
Dialogue: 0,0:05:04.99,0:05:06.86,Default,Ed,0000,0000,0000,,Carbon, 20kg.
Dialogue: 0,0:05:06.86,0:05:08.62,Default,Ed,0000,0000,0000,,Ammonia, 4 lít.
Dialogue: 0,0:05:08.62,0:05:10.87,Default,Ed,0000,0000,0000,,Vôi, 1.5kg.
Dialogue: 0,0:05:10.87,0:05:12.62,Default,Ed,0000,0000,0000,,Phosphorus, 800g.
Dialogue: 0,0:05:12.62,0:05:14.66,Default,Ed,0000,0000,0000,,Muối, 250g.
Dialogue: 0,0:05:15.00,0:05:16.67,Default,Ed,0000,0000,0000,,Niter, 100g.
Dialogue: 0,0:05:16.67,0:05:18.63,Default,Ed,0000,0000,0000,,Lưu huỳnh, 80g.
Dialogue: 0,0:05:18.63,0:05:20.63,Default,Ed,0000,0000,0000,,Fluorine, 7.5g.
Dialogue: 0,0:05:20.63,0:05:22.17,Default,Ed,0000,0000,0000,,Sắt, 5g.
Dialogue: 0,0:05:22.17,0:05:23.88,Default,Ed,0000,0000,0000,,Silicon, 3g.
Dialogue: 0,0:05:25.97,0:05:28.51,Default,Ed,0000,0000,0000,,Được rồi, ta viết công thức cấu trúc thôi.
Dialogue: 0,0:05:30.68,0:05:33.72,Default,Ed,0000,0000,0000,,Cuối cùng là... thông tin về linh hồn.
Dialogue: 0,0:05:38.02,0:05:39.10,Default,Ed,0000,0000,0000,,Ta làm thôi, Al.
Dialogue: 0,0:05:39.10,0:05:40.06,Default,Al,0000,0000,0000,,Vâng.
Dialogue: 0,0:05:52.16,0:05:53.79,Default,Al,0000,0000,0000,,Anh hai, có chuyện gì lạ lắm.
Dialogue: 0,0:06:01.21,0:06:01.84,Default,Ed,0000,0000,0000,,Al!
Dialogue: 0,0:06:07.22,0:06:09.22,Default,Ed,0000,0000,0000,,Không lẽ là... phản tác dụng?!
Dialogue: 0,0:06:09.22,0:06:09.93,Default,Al,0000,0000,0000,,Anh hai!!!
Dialogue: 0,0:06:10.43,0:06:13.10,Default,Al,0000,0000,0000,,Anh ơi, anh ơi...
Dialogue: 0,0:06:13.10,0:06:14.22,Default,Al,0000,0000,0000,,Anh hai!
Dialogue: 0,0:06:14.81,0:06:18.02,Default,Al,0000,0000,0000,,ANH HAI!!!
Dialogue: 0,0:06:23.27,0:06:24.36,Default,Ed,0000,0000,0000,,Al?
Dialogue: 0,0:06:24.36,0:06:27.40,Default,Ed,0000,0000,0000,,Ơ? Mình đang làm gì ở đây?
Dialogue: 0,0:06:27.40,0:06:28.11,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Yo.
Dialogue: 0,0:06:31.53,0:06:32.28,Default,Ed,0000,0000,0000,,Ai vậy?
Dialogue: 0,0:06:32.28,0:06:34.62,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Ái chà, hỏi hay lắm.
Dialogue: 0,0:06:35.29,0:06:38.33,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Ta là sự tồn tại mà các ngươi gọi là "Thế Giới".
Dialogue: 0,0:06:38.33,0:06:39.90,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Ta cũng là "Vũ Trụ".
Dialogue: 0,0:06:39.94,0:06:41.37,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Ta cũng là "Thần Linh".
Dialogue: 0,0:06:41.37,0:06:42.94,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Ta cũng là "Chân Lý".
Dialogue: 0,0:06:43.01,0:06:44.34,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Ta cũng là "Tất Cả".
Dialogue: 0,0:06:44.34,0:06:46.20,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Ta cũng là "Một".
Dialogue: 0,0:06:46.20,0:06:47.13,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Và ta cũng là...
Dialogue: 0,0:06:47.71,0:06:48.51,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Ngươi.
Dialogue: 0,0:06:52.43,0:06:53.97,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Xin chào mừng.
Dialogue: 0,0:06:53.97,0:06:56.89,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Hỡi kẻ ngu ngốc ngạo mạn kia.
Dialogue: 0,0:07:01.69,0:07:03.44,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Ồn ào thật...
Dialogue: 0,0:07:03.44,0:07:05.69,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Không phải ngươi muốn thứ ấy sao?
Dialogue: 0,0:07:08.07,0:07:11.20,Truth,Guy,0000,0000,0000,,{\blur3\bord4}Ta sẽ cho ngươi thấy "Chân Lý".
Dialogue: 0,0:07:21.21,0:07:26.17,Think,Ed,0000,0000,0000,,Dường như toàn bộ thông tin của thế giới này\Ntrực tiếp tuôn vào trong đầu tôi.
Dialogue: 0,0:07:26.17,0:07:28.42,Default,Ed,0000,0000,0000,,Ngừng lại! Đầu tôi sắp vỡ ra rồi!
Dialogue: 0,0:07:33.68,0:07:35.26,Default,Ed,0000,0000,0000,,Mình đang bị phân giải...
Dialogue: 0,0:07:35.26,0:07:38.01,Default,Ed,0000,0000,0000,,Không! Dừng lại!
Dialogue: 0,0:07:38.01,0:07:39.60,Default,Ed,0000,0000,0000,,Dừng lại!!!
Dialogue: 0,0:07:41.23,0:07:42.89,Think,Ed,0000,0000,0000,,Đầu tôi đau như nứt ra vậy.
Dialogue: 0,0:07:43.31,0:07:45.44,Think,Ed,0000,0000,0000,,Nhưng tôi đột nhiên nhận ra...
Dialogue: 0,0:07:45.86,0:07:47.36,Think,Ed,0000,0000,0000,,Đó chính là "Chân Lý".
Dialogue: 0,0:07:49.03,0:07:50.24,Default,Ed,0000,0000,0000,,Mẹ ơi...
Dialogue: 0,0:07:58.20,0:07:59.37,Truth,Truth,0000,0000,0000,,{\blur3\bord4}Thấy thế nào?
Dialogue: 0,0:08:03.41,0:08:04.00,Default,Ed,0000,0000,0000,,Đúng rồi...
Dialogue: 0,0:08:04.87,0:08:08.92,Default,Ed,0000,0000,0000,,Lý thuyết chuyển hóa cơ thể của tôi không hề có sai lầm...
Dialogue: 0,0:08:09.67,0:08:11.13,Default,Ed,0000,0000,0000,,Chỉ là thiếu thứ gì đó thôi!
Dialogue: 0,0:08:11.92,0:08:14.43,Default,Ed,0000,0000,0000,,Giá mà có thể tiến xa hơn chút nữa...
Dialogue: 0,0:08:14.43,0:08:16.84,Default,Ed,0000,0000,0000,,Thì tôi đã tìm ra chân lý về chuyển hóa cơ thể người rồi!
Dialogue: 0,0:08:16.84,0:08:19.26,Default,Ed,0000,0000,0000,,Xin anh đấy! Cho tôi xem lại lần nữa đi!
Dialogue: 0,0:08:19.26,0:08:20.14,Truth,Truth,0000,0000,0000,,{\blur3\bord4}Không được, không được.
Dialogue: 0,0:08:21.06,0:08:24.44,Truth,Truth,0000,0000,0000,,{\blur3\bord4}Với chừng đó "phí thông hành" thì chỉ có thể xem đến thế thôi.
Dialogue: 0,0:08:24.85,0:08:25.90,Default,Ed,0000,0000,0000,,Phí thông hành?
Dialogue: 0,0:08:26.56,0:08:28.77,Truth,Truth,0000,0000,0000,,{\blur3\bord4}Đúng vậy, phí thông hành.
Dialogue: 0,0:08:34.40,0:08:36.45,Truth,Truth,0000,0000,0000,,{\blur3\bord4}"Trao đổi đồng giá" mà nhỉ?
Dialogue: 0,0:08:36.45,0:08:38.45,Truth,Truth,0000,0000,0000,,{\blur3\bord4}Giả Kim Thuật Sư.
Dialogue: 0,0:08:46.04,0:08:50.17,Default,Ed,0000,0000,0000,,Khốn kiếp! Sao lại thế này chứ...
Dialogue: 0,0:08:50.67,0:08:53.67,Default,Ed,0000,0000,0000,,Chuyện này... không phải...
Dialogue: 0,0:08:54.05,0:08:55.55,Default,Ed,0000,0000,0000,,Khốn kiếp!!!
Dialogue: 0,0:08:55.55,0:08:58.30,Default,Ed,0000,0000,0000,,Bị lấy đi mất rồi!!!
Dialogue: 0,0:09:00.10,0:09:02.18,Default,Ed,0000,0000,0000,,Cứu với! Có ai không...
Dialogue: 0,0:09:02.81,0:09:05.48,Default,Ed,0000,0000,0000,,Mẹ... Mẹ ơi...
Dialogue: 0,0:09:20.12,0:09:22.66,Default,Ed,0000,0000,0000,,Đùa à... Không thể nào...
Dialogue: 0,0:09:22.66,0:09:23.66,Default,Ed,0000,0000,0000,,Đây đâu phải...
Dialogue: 0,0:09:25.25,0:09:27.71,Default,Ed,0000,0000,0000,,Đây đâu phải thứ mình mong muốn!!!
Dialogue: 0,0:09:28.29,0:09:30.54,Default,Ed,0000,0000,0000,,Al... Alphonse...
Dialogue: 0,0:09:31.13,0:09:33.76,Default,Ed,0000,0000,0000,,Alphonse! Alphonse!!!
Dialogue: 0,0:09:34.71,0:09:36.30,Default,Ed,0000,0000,0000,,Là do mình...
Dialogue: 0,0:09:36.84,0:09:38.47,Default,Ed,0000,0000,0000,,Alphonse!!!
Dialogue: 0,0:09:40.22,0:09:42.93,Default,Ed,0000,0000,0000,,Khốn nạn... Khốn nạn!!!
Dialogue: 0,0:09:43.68,0:09:46.18,Default,Ed,0000,0000,0000,,Trả lại đây... Trả em trai ta lại đây...
Dialogue: 0,0:09:46.98,0:09:48.56,Default,Ed,0000,0000,0000,,Dù là chân hay là cánh tay...
Dialogue: 0,0:09:48.56,0:09:50.81,Default,Ed,0000,0000,0000,,Hay là lấy đi trái tim ta cũng được!
Dialogue: 0,0:09:51.81,0:09:53.40,Default,Ed,0000,0000,0000,,Vì thế, trả lại đây...
Dialogue: 0,0:09:53.40,0:09:56.65,Default,Ed,0000,0000,0000,,Nó là em trai duy nhất của ta mà!!!
Dialogue: 0,0:10:04.91,0:10:07.25,Default,Hughes,0000,0000,0000,,Yo. Cậu vẫn loanh quanh ở Central à?
Dialogue: 0,0:10:08.46,0:10:11.50,Default,Roy,0000,0000,0000,,Họ cho phép tôi quay về Bộ tư lệnh phía đông rồi.
Dialogue: 0,0:10:11.50,0:10:13.38,Default,Hughes,0000,0000,0000,,Cậu làm tốt lắm.
Dialogue: 0,0:10:13.88,0:10:17.51,Default,Hughes,0000,0000,0000,,Lần tới lên đây ít ra cũng phẻi leo lên\Nchức Chuẩn tướng nhé, Đại tá?
Dialogue: 0,0:10:17.51,0:10:19.13,Default,Roy,0000,0000,0000,,Nói thì dễ lắm.
Dialogue: 0,0:10:20.93,0:10:24.22,Default,Hughes,0000,0000,0000,,Mà này, nếu cậu về bây giờ thì tôi đưa cậu cái này luôn.
Dialogue: 0,0:10:24.22,0:10:25.18,Default,Roy,0000,0000,0000,,Gì vậy?
Dialogue: 0,0:10:25.18,0:10:28.52,Default,Hughes,0000,0000,0000,,Bản báo cáo cuối cùng về Isaac McDougal.
Dialogue: 0,0:10:29.56,0:10:31.69,Default,Hughes,0000,0000,0000,,Cậu chưa đọc mà, phải không?
Dialogue: 0,0:10:32.36,0:10:33.06,Default,Roy,0000,0000,0000,,Ừ.
Dialogue: 0,0:10:35.73,0:10:37.86,Default,Roy,0000,0000,0000,,"Luyện đan thuật" của nước Xing?
Dialogue: 0,0:10:37.86,0:10:39.99,Default,Hughes,0000,0000,0000,,Thứ ấy có tồn tại đấy.
Dialogue: 0,0:10:39.99,0:10:41.86,Default,Hughes,0000,0000,0000,,Nói thật là tôi cũng không hiểu gì cả...
Dialogue: 0,0:10:41.86,0:10:42.99,Default,Hughes,0000,0000,0000,,Có nhớ ra cái gì không?
Dialogue: 0,0:10:42.99,0:10:45.03,Default,Roy,0000,0000,0000,,Không, tôi chưa nghe về thuật này bao giờ.
Dialogue: 0,0:10:46.04,0:10:49.00,Default,Hughes,0000,0000,0000,,Mà dạo này Anh Em Elric làm ăn thế nào?
Dialogue: 0,0:10:49.00,0:10:50.79,Default,Roy,0000,0000,0000,,Tôi đâu phải vú em của tụi nó.
Dialogue: 0,0:10:52.71,0:10:56.67,Default,Hughes,0000,0000,0000,,Này, tại sao cậu lại để Ed trở thành\NGiả Kim Thuật Sư Quốc Gia?
Dialogue: 0,0:10:57.13,0:10:58.84,Default,Hughes,0000,0000,0000,,Nó vẫn còn là trẻ con mà?
Dialogue: 0,0:10:59.80,0:11:04.05,Default,Hughes,0000,0000,0000,,Còn ở trong quân đội là sẽ có ngày phải kinh qua "địa ngục".
Dialogue: 0,0:11:05.26,0:11:06.97,Default,Hughes,0000,0000,0000,,Cũng như chúng ta vậy.
Dialogue: 0,0:11:12.60,0:11:13.65,Think,Roy,0000,0000,0000,,Địa ngục à...
Dialogue: 0,0:11:14.86,0:11:17.98,Think,Roy,0000,0000,0000,,Hai đứa nó đã nhìn thấy "địa ngục rồi".
Dialogue: 0,0:11:17.98,0:11:19.61,Think,Roy,0000,0000,0000,,Quá nhiều là đằng khác...
Dialogue: 0,0:11:22.28,0:11:25.03,Stock,Hawk,0000,0000,0000,,{\fs50\fnUVN Bach Tuyet}4 năm trước
Dialogue: 0,0:11:28.08,0:11:30.54,Default,Hawk,0000,0000,0000,,Trung tá, họ không có ở sân sau...
Dialogue: 0,0:11:31.41,0:11:32.42,Default,Hawk,0000,0000,0000,,Gì thế này...
Dialogue: 0,0:11:32.42,0:11:33.71,Default,Roy,0000,0000,0000,,Ở đâu?
Dialogue: 0,0:11:34.42,0:11:36.84,Default,Roy,0000,0000,0000,,Anh Em Elric đang ở đâu?!
Dialogue: 0,0:11:38.92,0:11:40.59,Default,Gran,0000,0000,0000,,Trật tự nào, Den.
Dialogue: 0,0:11:41.42,0:11:42.47,Default,Gran,0000,0000,0000,,Đón khách thì phải...
Dialogue: 0,0:11:43.97,0:11:47.31,Default,Gran,0000,0000,0000,,Này, lính tráng các anh có việc gì ở đây?
Dialogue: 0,0:11:52.56,0:11:54.23,Default,Roy,0000,0000,0000,,Tôi vừa mới từ nhà cậu tới!
Dialogue: 0,0:11:54.23,0:11:55.40,Default,Roy,0000,0000,0000,,Cái đó là gì vậy hả?!
Dialogue: 0,0:11:55.56,0:11:56.90,Default,Roy,0000,0000,0000,,Cậu đã làm ra cái gì?!
Dialogue: 0,0:12:01.90,0:12:04.78,Default,Al,0000,0000,0000,,Xin lỗi anh... Xin hãy tha cho bọn em.
Dialogue: 0,0:12:05.57,0:12:08.28,Default,Al,0000,0000,0000,,Xin lỗi... Xin lỗi...
Dialogue: 0,0:12:09.08,0:12:10.33,Default,Al,0000,0000,0000,,Xin lỗi...
Dialogue: 0,0:12:11.66,0:12:12.91,Default,Roy,0000,0000,0000,,Cậu là...
Dialogue: 0,0:12:14.21,0:12:15.54,Default,Roy,0000,0000,0000,,Tôi bất ngờ lắm.
Dialogue: 0,0:12:16.17,0:12:19.71,Default,Roy,0000,0000,0000,,Tôi tới là vì nghe nói ở đây có một nhà giả kim tài năng.
Dialogue: 0,0:12:20.38,0:12:22.67,Default,Roy,0000,0000,0000,,Thật không ngờ một đứa nhỏ...
Dialogue: 0,0:12:22.67,0:12:24.97,Default,Roy,0000,0000,0000,,lại có thể chuyển hóa cơ thể người, dù chưa hoàn thiện,
Dialogue: 0,0:12:25.76,0:12:28.30,Default,Roy,0000,0000,0000,,lại còn có thể gắn linh hồn vào áo giáp.
Dialogue: 0,0:12:29.06,0:12:33.18,Default,Roy,0000,0000,0000,,Vậy là thừa sức đạt danh hiệu Giả Kim Thuật Sư Quốc Gia rồi.
Dialogue: 0,0:12:33.93,0:12:36.39,Default,Roy,0000,0000,0000,,Nếu đạt chứng nhận Quốc Gia,
Dialogue: 0,0:12:36.39,0:12:39.94,Default,Roy,0000,0000,0000,,khi cần thiết cậu ta sẽ phải là một binh sĩ tham chiến,
Dialogue: 0,0:12:39.94,0:12:45.03,Default,Roy,0000,0000,0000,,nhưng sẽ được hưởng nhiều đặc quyền và có thể\Ntiến hành nghiên cứu ở cấp cao nhất.
Dialogue: 0,0:12:45.70,0:12:49.87,Default,Roy,0000,0000,0000,,Họ sẽ có cơ hội tìm ra cách phục hồi cơ thể...
Dialogue: 0,0:12:51.29,0:12:58.04,Default,Gran,0000,0000,0000,,Sau khi lũ trẻ này lết cái xác đầy máu tới đây, tôi đã tới nhà tụi nó.
Dialogue: 0,0:12:59.59,0:13:00.59,Default,Gran,0000,0000,0000,,Thứ đó...
Dialogue: 0,0:13:01.50,0:13:04.01,Default,Gran,0000,0000,0000,,Thứ đó không phải con người!
Dialogue: 0,0:13:04.01,0:13:07.51,Default,Gran,0000,0000,0000,,Giả kim thuật là để tạo ra những thứ kinh khủng thế sao?
Dialogue: 0,0:13:08.30,0:13:10.05,Default,Gran,0000,0000,0000,,Vậy thì tôi phản đối!
Dialogue: 0,0:13:10.51,0:13:13.64,Default,Gran,0000,0000,0000,,Anh định bắt lũ trẻ nhìn thấy địa ngục một lần nữa hay sao?
Dialogue: 0,0:13:15.23,0:13:16.02,Default,Winry,0000,0000,0000,,Mời chị.
Dialogue: 0,0:13:17.56,0:13:18.65,Default,Hawk,0000,0000,0000,,Cảm ơn em.
Dialogue: 0,0:13:25.24,0:13:27.57,Default,Winry,0000,0000,0000,,Chị Thiếu úy...
Dialogue: 0,0:13:27.57,0:13:28.74,Default,Hawk,0000,0000,0000,,Cứ gọi chị là Riza.
Dialogue: 0,0:13:28.74,0:13:31.28,Default,Hawk,0000,0000,0000,,Riza Hawkeye. Rất vui được gặp em.
Dialogue: 0,0:13:36.37,0:13:37.58,Default,Winry,0000,0000,0000,,Chị Riza...
Dialogue: 0,0:13:38.17,0:13:39.96,Default,Winry,0000,0000,0000,,Chị đã bắn ai bao giờ chưa?
Dialogue: 0,0:13:43.21,0:13:43.80,Default,Hawk,0000,0000,0000,,Rồi.
Dialogue: 0,0:13:45.13,0:13:46.84,Default,Winry,0000,0000,0000,,Em ghét quân nhân lắm.
Dialogue: 0,0:13:47.26,0:13:51.76,Default,Winry,0000,0000,0000,,Vì mẹ và cha em đều bị giết hại trên chiến trường.
Dialogue: 0,0:13:53.43,0:13:57.43,Default,Winry,0000,0000,0000,,Và giờ hai người lại định đưa cả Ed và Al đi nữa...
Dialogue: 0,0:13:58.10,0:14:02.06,Default,Hawk,0000,0000,0000,,Đi hay không, quyền quyết định là ở họ.
Dialogue: 0,0:14:02.94,0:14:05.94,Default,Hawk,0000,0000,0000,,Đúng vậy. Tùy họ quyết định.
Dialogue: 0,0:14:05.94,0:14:07.61,Default,Roy,0000,0000,0000,,Tôi không bắt ép ai cả.
Dialogue: 0,0:14:07.61,0:14:10.07,Default,Roy,0000,0000,0000,,Tôi chỉ đang đưa ra một khả năng khác thôi.
Dialogue: 0,0:14:10.07,0:14:12.20,Default,Hawk,0000,0000,0000,,Ở lại đây hay tiến về phía trước.
Dialogue: 0,0:14:12.20,0:14:14.80,Default,Roy,0000,0000,0000,,Cậu muốn đời mình kết thúc trong tuyệt vọng,
Dialogue: 0,0:14:14.80,0:14:17.71,Default,Roy,0000,0000,0000,,hay quỳ gối trước quân đội để theo đuổi hi vọng.
Dialogue: 0,0:14:17.71,0:14:20.96,Default,Hawk,0000,0000,0000,,Quyền quyết định nằm trong tay hai cậu ấy.
Dialogue: 0,0:14:20.96,0:14:25.44,Default,Roy,0000,0000,0000,,Nếu trên con đường ấy có thể có giải pháp phục hồi cơ thể,
Dialogue: 0,0:14:25.44,0:14:27.38,Default,Roy,0000,0000,0000,,vậy thì cậu nên mạnh dạn tiến bước.
Dialogue: 0,0:14:27.84,0:14:31.22,Default,Roy,0000,0000,0000,,Dù cho đó có là con sông đầy bùn lầy.
Dialogue: 0,0:14:37.60,0:14:40.35,Default,Winry,0000,0000,0000,,Tại sao chị Riza lại vào quân đội?
Dialogue: 0,0:14:43.36,0:14:45.52,Default,Hawk,0000,0000,0000,,Bởi vì chị phải bảo vệ một người.
Dialogue: 0,0:14:49.65,0:14:50.82,Default,Roy,0000,0000,0000,,Ta đi thôi.
Dialogue: 0,0:14:50.82,0:14:51.66,Default,Hawk,0000,0000,0000,,Rõ.
Dialogue: 0,0:14:55.53,0:14:57.91,Default,Hawk,0000,0000,0000,,Thôi, tạm biệt nhé, cô bé.
Dialogue: 0,0:14:59.87,0:15:00.91,Default,Winry,0000,0000,0000,,Em là Winry.
Dialogue: 0,0:15:02.54,0:15:04.46,Default,Hawk,0000,0000,0000,,Ừ. Winry.
Dialogue: 0,0:15:06.21,0:15:08.42,Default,Hawk,0000,0000,0000,,Hi vọng mình sẽ gặp lại nhau.
Dialogue: 0,0:15:10.26,0:15:11.05,Default,Hawk,0000,0000,0000,,Liệu cậu ta có tới không?
Dialogue: 0,0:15:11.93,0:15:13.01,Default,Roy,0000,0000,0000,,Sẽ tới chứ.
Dialogue: 0,0:15:13.01,0:15:15.68,Default,Hawk,0000,0000,0000,,Nhưng cặp mắt cậu nhóc ấy vô hồn vậy...
Dialogue: 0,0:15:16.76,0:15:17.68,Default,Roy,0000,0000,0000,,Cô nghĩ vậy sao?
Dialogue: 0,0:15:18.72,0:15:21.52,Default,Roy,0000,0000,0000,,Tôi lại thấy... ánh mắt ấy rực lửa đấy.
Dialogue: 0,0:15:28.57,0:15:30.15,Default,Gran,0000,0000,0000,,Cháu không hối hận chứ?
Dialogue: 0,0:15:30.69,0:15:33.45,Default,Ed,0000,0000,0000,,Không, cháu đã quyết tâm rồi.
Dialogue: 0,0:15:34.32,0:15:36.66,Default,Ed,0000,0000,0000,,Cả phẫu thuật và hồi phục phải mất bao lâu?
Dialogue: 0,0:15:36.66,0:15:38.58,Default,Gran,0000,0000,0000,,Khoảng ba năm đấy.
Dialogue: 0,0:15:41.46,0:15:42.58,Default,Ed,0000,0000,0000,,Chỉ cần một năm.
Dialogue: 0,0:15:44.38,0:15:46.21,Default,Gran,0000,0000,0000,,Cháu sẽ vất vả tới ho ra máu đó.
Dialogue: 0,0:15:48.21,0:15:51.17,Default,Ed,0000,0000,0000,,Al, em chịu đựng thêm một chút nữa nhé.
Dialogue: 0,0:15:51.17,0:15:53.43,Default,Ed,0000,0000,0000,,Anh nhất định sẽ lấy lại cơ thể cho em.
Dialogue: 0,0:15:53.43,0:15:54.34,Default,Al,0000,0000,0000,,Vâng.
Dialogue: 0,0:15:54.34,0:15:56.60,Default,Al,0000,0000,0000,,Nhưng lúc ấy anh cũng phải phục hồi được tay chân đấy.
Dialogue: 0,0:15:57.14,0:15:57.81,Default,Ed,0000,0000,0000,,Ừ.
Dialogue: 0,0:16:11.82,0:16:13.86,Default,Al,0000,0000,0000,,Cơ thể giờ ngon lành rồi nhỉ?
Dialogue: 0,0:16:13.86,0:16:16.20,Default,Ed,0000,0000,0000,,Ừ! Chỉ còn thử dùng giả kim thuật nữa là xong.
Dialogue: 0,0:16:16.20,0:16:18.24,Default,Ed,0000,0000,0000,,Từ lúc ấy tới giờ anh vẫn chưa dùng qua nữa.
Dialogue: 0,0:16:18.24,0:16:19.61,Default,Al,0000,0000,0000,,Vậy à...
Dialogue: 0,0:16:19.61,0:16:22.50,Default,Al,0000,0000,0000,,Từ lúc gắn linh hồn em vào đây anh chưa dùng lần nào sao.
Dialogue: 0,0:16:27.84,0:16:28.50,Default,Al,0000,0000,0000,,Anh hai!
Dialogue: 0,0:16:28.50,0:16:30.88,Default,Ed,0000,0000,0000,,Oa, ngon lành, ngon lành rồi.
Dialogue: 0,0:16:30.88,0:16:33.72,Default,Al,0000,0000,0000,,Giỏi quá, anh hai! Anh chuyển hóa\Nkhông cần luyện thành trận kìa!
Dialogue: 0,0:16:33.72,0:16:36.68,Default,Al,0000,0000,0000,,Anh cũng làm được giống sư phụ rồi đấy!
Dialogue: 0,0:16:37.01,0:16:38.89,Default,Ed,0000,0000,0000,,Em cũng làm được vậy mà?
Dialogue: 0,0:16:38.89,0:16:40.68,Default,Al,0000,0000,0000,,Em không làm được.
Dialogue: 0,0:16:42.98,0:16:44.89,Default,Ed,0000,0000,0000,,Vậy em không nhìn thấy cái đó sao?
Dialogue: 0,0:16:44.89,0:16:46.10,Default,Al,0000,0000,0000,,Thấy cái gì?
Dialogue: 0,0:16:46.73,0:16:48.73,Default,Ed,0000,0000,0000,,Không... thôi quên đi.
Dialogue: 0,0:16:49.44,0:16:50.57,Default,Winry,0000,0000,0000,,Ê này!
Dialogue: 0,0:16:50.57,0:16:53.19,Default,Winry,0000,0000,0000,,Cậu dám làm biến dạng Automail của tớ hả?!
Dialogue: 0,0:16:53.19,0:16:55.86,Default,Ed,0000,0000,0000,,Thế cậu làm biến dạng đầu tớ thì sao?!
Dialogue: 0,0:16:56.41,0:16:58.49,Default,Ed,0000,0000,0000,,Thật là...
Dialogue: 0,0:16:58.49,0:17:00.62,Default,Ed,0000,0000,0000,,Cái đồ cuồng máy móc xấu xí.
Dialogue: 0,0:17:01.74,0:17:03.45,Default,Winry,0000,0000,0000,,Xấu xí gì kệ người ta!
Dialogue: 0,0:17:03.45,0:17:04.96,Default,Winry,0000,0000,0000,,Tớ cuồng máy móc đấy, thì sao?
Dialogue: 0,0:17:04.96,0:17:09.96,Default,Winry,0000,0000,0000,,Tớ đã quyết tâm chăm sóc cậu cho tới khi\Ncả hai phục hồi cơ thể rồi!
Dialogue: 0,0:17:09.96,0:17:11.50,Default,Ed,0000,0000,0000,,Hả?
Dialogue: 0,0:17:14.67,0:17:17.22,Default,Guy,0000,0000,0000,,Thật hiếm khi thấy ngài thân chinh tới theo dõi bài kiểm tra.
Dialogue: 0,0:17:17.22,0:17:21.14,Default,Brad,0000,0000,0000,,Thì nghe nói người ứng thí là một cậu nhóc 12 tuổi,
Dialogue: 0,0:17:21.14,0:17:24.27,Default,Brad,0000,0000,0000,,nên tôi tính ngó qua để về có chuyện kể với vợ con mà.
Dialogue: 0,0:17:25.48,0:17:27.90,Default,Brad,0000,0000,0000,,Ồ, cánh tay làm bằng thép à...
Dialogue: 0,0:17:29.10,0:17:30.94,Default,Ed,0000,0000,0000,,Cái này là do nội chiến ở miền đông...
Dialogue: 0,0:17:30.94,0:17:34.65,Default,Brad,0000,0000,0000,,Ừ, ở Ishval đúng là có rất lắm vấn đề.
Dialogue: 0,0:17:35.94,0:17:36.86,Default,Ed,0000,0000,0000,,Ai đây?
Dialogue: 0,0:17:37.70,0:17:40.57,Default,Guy,0000,0000,0000,,Đồ ngốc! Đây là ngài Tổng thống King Bradley đấy!
Dialogue: 0,0:17:43.45,0:17:46.00,Default,Brad,0000,0000,0000,,Nào, bắt đầu bài kiểm tra đi.
Dialogue: 0,0:17:48.37,0:17:50.83,Default,Guy,0000,0000,0000,,Cậu có đem theo dụng cụ vẽ luyện thành trận không?
Dialogue: 0,0:17:50.83,0:17:52.63,Default,Ed,0000,0000,0000,,Tôi không cần mấy thứ ấy.
Dialogue: 0,0:17:59.76,0:18:01.47,Default,Roy,0000,0000,0000,,Không cần luyện thành trận...
Dialogue: 0,0:18:12.90,0:18:14.52,Default,Brad,0000,0000,0000,,Có vẻ cũng có tay nghề đây...
Dialogue: 0,0:18:16.74,0:18:17.36,Default,Guy,0000,0000,0000,,Ngài Tổng thống!
Dialogue: 0,0:18:22.37,0:18:26.33,Default,Ed,0000,0000,0000,,Các quan chức cấp cao của quân đội\Ncó thể bị ám sát như thế này...
Dialogue: 0,0:18:26.33,0:18:29.58,Default,Ed,0000,0000,0000,,Mấy ông nên thay đổi cách kiểm tra đi là hơn.
Dialogue: 0,0:18:35.59,0:18:38.05,Default,Brad,0000,0000,0000,,Cậu nhóc này đúng là rất có dũng khí.
Dialogue: 0,0:18:38.55,0:18:41.51,Default,Brad,0000,0000,0000,,Nhưng chẳng biết trời cao đất dày là gì.
Dialogue: 0,0:18:46.60,0:18:49.42,Default,Brad,0000,0000,0000,,Chúc cậu làm tốt các bài kiểm tra còn lại nhé,
Dialogue: 0,0:18:49.42,0:18:51.77,Default,Brad,0000,0000,0000,,giả kim thuật sư trẻ tuổi.
Dialogue: 0,0:18:53.69,0:18:55.40,Default,Ed,0000,0000,0000,,Ông ta rút kiếm từ khi nào vậy?
Dialogue: 0,0:18:59.99,0:19:02.53,Default,Al,0000,0000,0000,,Không biết anh hai làm bài thi có tốt không.
Dialogue: 0,0:19:04.45,0:19:05.74,Default,Winry,0000,0000,0000,,Này, Al.
Dialogue: 0,0:19:05.74,0:19:07.45,Default,Al,0000,0000,0000,,Sao vậy?
Dialogue: 0,0:19:08.12,0:19:10.62,Default,Winry,0000,0000,0000,,Nếu Ed trở thành Giả Kim Thuật Sư Quốc Gia...
Dialogue: 0,0:19:11.29,0:19:13.08,Default,Winry,0000,0000,0000,,các cậu sẽ rời khỏi thị trấn này à?
Dialogue: 0,0:19:15.42,0:19:16.25,Default,Al,0000,0000,0000,,Ừ.
Dialogue: 0,0:19:18.84,0:19:21.88,Default,Roy,0000,0000,0000,,Đây là vật chứng minh danh hiệu Quốc Gia - đồng hồ bạc.
Dialogue: 0,0:19:21.97,0:19:25.64,Stock,Hawk,0000,0000,0000,,{\pos(640,533)\fad(500,0)\fnUVN Bach Tuyet\fs50}East City\NBộ tư lệnh phía đông
Dialogue: 0,0:19:22.97,0:19:26.97,Default,Roy,0000,0000,0000,,Bằng chứng nhận và bản giao ước đây...
Dialogue: 0,0:19:26.97,0:19:29.89,Default,Roy,0000,0000,0000,,Ngài Tổng thống tặng cho cậu danh hiệu mỉa mai thật...
Dialogue: 0,0:19:30.06,0:19:31.10,Default,Ed,0000,0000,0000,,Là gì?
Dialogue: 0,0:19:31.10,0:19:32.94,Default,Roy,0000,0000,0000,,Không, chúc mừng nhé.
Dialogue: 0,0:19:33.31,0:19:35.56,Default,Roy,0000,0000,0000,,Từ giờ cậu đã là chó săn của quân đội rồi.
Dialogue: 0,0:19:36.19,0:19:39.44,Default,Ed,0000,0000,0000,,"Tổng thống King Bradley công nhận..."
Dialogue: 0,0:19:39.44,0:19:44.16,Default,Brad,0000,0000,0000,,"Edward Elric đạt chuẩn Giả Kim Thuật Sư Quốc Gia,"
Dialogue: 0,0:19:44.16,0:19:46.83,Default,Brad,0000,0000,0000,,"danh hiệu là Cang."
Dialogue: 0,0:19:48.54,0:19:49.33,Default,Ed,0000,0000,0000,,Cang?
Dialogue: 0,0:19:49.33,0:19:50.66,Default,Roy,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:19:50.66,0:19:53.87,Default,Roy,0000,0000,0000,,Cái tên thứ hai được tặng cho các Giả Kim Thuật Sư Quốc Gia.
Dialogue: 0,0:19:53.87,0:19:55.46,Default,Roy,0000,0000,0000,,Danh hiệu của cậu sẽ là...
Dialogue: 0,0:19:56.50,0:19:58.50,Default,Roy,0000,0000,0000,,"Cang Giả Kim Thuật Sư".
Dialogue: 0,0:20:00.17,0:20:03.47,Default,Ed,0000,0000,0000,,Hay đấy, nghe có vẻ nặng nề ghê.
Dialogue: 0,0:20:04.01,0:20:06.34,Default,Ed,0000,0000,0000,,Nhưng tôi rất vui lòng nhận.
Dialogue: 0,0:20:10.18,0:20:12.60,Default,Al,0000,0000,0000,,Anh hai, mình sắp tới nơi rồi.
Dialogue: 0,0:20:17.27,0:20:19.02,Default,Ed,0000,0000,0000,,Liore à...
Dialogue: 0,0:20:20.32,0:20:24.24,Think,Ed,0000,0000,0000,,Hi vọng ở đây có manh mối giúp phục hồi cơ thể cho Al...
Dialogue: 0,0:20:25.57,0:20:27.03,Default,Ed,0000,0000,0000,,Hòn Đá Triết Gia...
Dialogue: 0,0:20:28.53,0:20:31.49,Default,Narr,0000,0000,0000,,Tại thành phố Liore, Ed và Al gặp Cornello,
Dialogue: 0,0:20:31.49,0:20:35.54,Default,Narr,0000,0000,0000,,vị giáo sĩ được đồn rằng có khả năng hồi sinh người chết.
Dialogue: 0,0:20:35.54,0:20:38.59,Default,Narr,0000,0000,0000,,"Hãy cầu nguyện, tin tưởng, và các con sẽ được cứu rỗi".
Dialogue: 0,0:20:39.04,0:20:41.12,Default,Narr,0000,0000,0000,,Người ấy miệng thuyết giảng những lời hoa mỹ,
Dialogue: 0,0:20:41.74,0:20:43.97,Default,Narr,0000,0000,0000,,và trên tay đeo Hòn Đá Triết Gia màu đỏ.
Dialogue: 0,0:20:44.67,0:20:48.55,Default,Narr,0000,0000,0000,,Lần tới, Cang Giả Kim Thuật Sư - Fullmetal Alchemist:
Dialogue: 0,0:20:48.55,0:20:51.55,Next,Nar,0000,0000,0000,,{\pos(318,152)}Tập 3
Dialogue: 0,0:20:48.55,0:20:51.55,Next,Nar,0000,0000,0000,,{\pos(638,467)\fn UVN Bui Doi}Thành Phố Của Dị Giáo
Dialogue: 0,0:20:48.55,0:20:51.55,Default,Narr,0000,0000,0000,,Tập 3, Thành Phố Của Dị Giáo.
Dialogue: 0,0:20:51.56,0:20:55.85,Default,Narr,0000,0000,0000,,Thứ hạnh phúc có được khi lẩn tránh\Nsự thật trước mắt thực ra là gì?
Dialogue: 0,0:20:55.85,0:20:57.85,Default,,0000,0000,0000,,
