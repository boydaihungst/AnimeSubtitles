Dialogue: 1,0:00:00.00,0:00:02.98,Credit,Nar,0000,0000,0000,,Subbed by BLACK - ATeam
Dialogue: 0,0:00:16.16,0:00:19.16,Default,Al,0000,0000,0000,,Anh hai, mình sắp tới Dublith rồi đó.
Dialogue: 0,0:00:20.99,0:00:22.00,Default,Al,0000,0000,0000,,Anh vừa mơ cái gì à?
Dialogue: 0,0:00:22.83,0:00:24.04,Default,Ed,0000,0000,0000,,Ừ.
Dialogue: 0,0:00:24.04,0:00:25.50,Default,Ed,0000,0000,0000,,Vừa mới mơ về lão ta.
Dialogue: 0,0:00:31.26,0:00:33.84,Default,Ed,0000,0000,0000,,Cuối cùng cũng tới nơi rồi nhỉ?
Dialogue: 0,0:00:33.84,0:00:34.72,Default,Al,0000,0000,0000,,Ừ.
Dialogue: 0,0:00:35.80,0:00:38.55,Default,Ed,0000,0000,0000,,Hi vọng sư phụ không có nhà...
Dialogue: 0,0:00:38.55,0:00:39.43,Default,Al,0000,0000,0000,,Ừ...
Dialogue: 0,0:00:50.23,0:00:51.94,Default,Ed,0000,0000,0000,,Chào... Chào bác ạ...
Dialogue: 0,0:00:51.94,0:00:53.44,Default,Al,0000,0000,0000,,Lâu rồi không gặp bác...
Dialogue: 0,0:00:54.03,0:00:55.24,Default,Sig,0000,0000,0000,,Chào các cháu.
Dialogue: 0,0:00:55.24,0:00:56.82,Default,Sig,0000,0000,0000,,Lớn ghê rồi đấy nhỉ.
Dialogue: 0,0:00:56.82,0:00:58.49,Think,Ed,0000,0000,0000,,Nhỏ đi thì có...
Dialogue: 0,0:00:58.95,0:01:01.45,Default,Al,0000,0000,0000,,Bác ơi, cháu là Alphonse đây.
Dialogue: 0,0:01:01.87,0:01:03.33,Default,Al,0000,0000,0000,,Lâu quá không gặp bác ạ.
Dialogue: 0,0:01:05.66,0:01:07.92,Default,Shi,0000,0000,0000,,Cháu lớn nhanh thật đấy.
Dialogue: 0,0:01:08.54,0:01:12.38,Think,Al,0000,0000,0000,,Từ khi biến thành thế này, lần đầu tiên mình được xoa đầu!
Dialogue: 0,0:01:13.26,0:01:16.34,Default,Sig,0000,0000,0000,,Izumi, bọn nhóc nhà Elric tới này.
Dialogue: 0,0:01:16.72,0:01:17.97,Default,Sig,0000,0000,0000,,Em có dậy nổi không?
Dialogue: 0,0:01:18.34,0:01:19.51,Default,Izumi,0000,0000,0000,,Em dậy được.
Dialogue: 0,0:01:19.51,0:01:21.56,Default,Izumi,0000,0000,0000,,Hôm nay em thấy cũng khá lắm.
Dialogue: 0,0:01:22.06,0:01:24.27,Default,Al,0000,0000,0000,,Sư phụ vẫn phải nằm trên giường vì không được khỏe nhỉ.
Dialogue: 0,0:01:24.27,0:01:26.56,Default,Ed,0000,0000,0000,,Cơ thể sư phụ vẫn chưa hồi phục sao?
Dialogue: 0,0:01:38.82,0:01:41.20,Default,Izumi,0000,0000,0000,,Thằng đệ tử ngu đần này!
Dialogue: 0,0:01:41.20,0:01:43.58,Default,Izumi,0000,0000,0000,,Nghe nói ngươi dám đi làm chó săn cho quân đội hả!?
Dialogue: 0,0:01:50.13,0:01:52.67,Default,Al,0000,0000,0000,,Sư phụ! À... chuyện này...
Dialogue: 0,0:01:53.88,0:01:57.17,Default,Izumi,0000,0000,0000,,Al! Con giờ cao lớn quá nhỉ!
Dialogue: 0,0:01:59.93,0:02:02.30,Default,Al,0000,0000,0000,,Sư phụ thì vẫn mạnh khỏe như xưa...
Dialogue: 0,0:02:06.27,0:02:07.89,Default,Izumi,0000,0000,0000,,Lại lười luyện tập rồi phải không!
Dialogue: 0,0:02:07.89,0:02:09.10,Default,Ed,0000,0000,0000,,Úi da...
Dialogue: 0,0:02:09.10,0:02:11.40,Default,Al,0000,0000,0000,,Con cứ tưởng sư phụ đang ốm chứ?
Dialogue: 0,0:02:11.40,0:02:12.59,Default,Izumi,0000,0000,0000,,Ốm sắp chết rồi đây!
Dialogue: 0,0:02:12.59,0:02:14.90,Default,Izumi,0000,0000,0000,,Nhưng nghe chồng bảo hai thằng ngốc đến thăm ta nên...
Dialogue: 0,0:02:18.86,0:02:20.41,Default,Sig,0000,0000,0000,,Em đừng gắng sức quá.
Dialogue: 0,0:02:21.16,0:02:23.62,Default,Izumi,0000,0000,0000,,Anh lo lắng cho em đến vậy ư...
Dialogue: 0,0:02:23.62,0:02:24.70,Default,Izumi,0000,0000,0000,,Ông xã của em?
Dialogue: 0,0:02:29.29,0:02:31.54,Default,Izumi,0000,0000,0000,,Ta không biết nhiều về Hòn Đá Triết Gia.
Dialogue: 0,0:02:32.17,0:02:33.79,Default,Izumi,0000,0000,0000,,Căn bản tại ta không hứng thú.
Dialogue: 0,0:02:33.79,0:02:35.30,Default,Ed,0000,0000,0000,,Thế ạ...
Dialogue: 0,0:02:36.21,0:02:40.68,Default,Sig,0000,0000,0000,,Lúc ở Central mình có gặp một nhà giả kim\Nrất hiểu biết về Hòn Đá mà nhỉ?
Dialogue: 0,0:02:42.55,0:02:43.64,Default,Ed,0000,0000,0000,,Người đó là ai ạ?
Dialogue: 0,0:02:43.97,0:02:46.89,Default,Izumi,0000,0000,0000,,Hình như tên ông ta là...
Dialogue: 0,0:02:47.56,0:02:48.73,Default,Izumi,0000,0000,0000,,Hohenheim.
Dialogue: 0,0:02:59.32,0:03:00.20,Default,Izumi,0000,0000,0000,,Sao thế?
Dialogue: 0,0:03:01.28,0:03:02.70,Default,Ed,0000,0000,0000,,Lão ta vẫn sống à...
Dialogue: 0,0:03:03.20,0:03:04.24,Default,Izumi,0000,0000,0000,,Con biết ông ấy hả?
Dialogue: 0,0:03:05.62,0:03:06.87,Default,Al,0000,0000,0000,,Ông ấy là bố tụi con.
Dialogue: 0,0:03:08.20,0:03:09.87,Default,Izumi,0000,0000,0000,,Là người đã bỏ nhà ra đi từ lâu ấy à...
Dialogue: 0,0:03:10.33,0:03:11.42,Default,Ed,0000,0000,0000,,Lão khốn!
Dialogue: 0,0:03:13.79,0:03:16.67,Default,Ed,0000,0000,0000,,Chính vì lão mà mẹ phải chết.
Dialogue: 0,0:03:17.21,0:03:18.76,Default,Ed,0000,0000,0000,,Là lỗi của lão ta...
Dialogue: 0,0:03:24.14,0:03:27.60,Default,Tri,0000,0000,0000,,Sao các con dậy sớm thế?
Dialogue: 0,0:03:29.56,0:03:31.81,Default,Ed,0000,0000,0000,,Al nói muốn đi tè ạ...
Dialogue: 0,0:03:31.81,0:03:33.98,Default,Tri,0000,0000,0000,,Con đã biết chăm sóc em rồi cơ à.
Dialogue: 0,0:03:33.98,0:03:35.81,Default,Tri,0000,0000,0000,,Cảm ơn con, Ed.
Dialogue: 0,0:04:01.92,0:04:03.59,Default,Ed,0000,0000,0000,,Mẹ ơi, bố đâu rồi ạ?
Dialogue: 0,0:04:07.64,0:04:08.60,Default,Mom,0000,0000,0000,,Bố đi có việc rồi.
Dialogue: 0,0:04:08.85,0:04:10.52,Default,Al,0000,0000,0000,,Khi nào bố về ạ?
Dialogue: 0,0:04:14.52,0:04:17.31,Default,Mom,0000,0000,0000,,Cù nè, cù nè!
Dialogue: 0,0:04:18.32,0:04:19.73,Default,Mom,0000,0000,0000,,Cù nè, cù nè!
Dialogue: 0,0:04:20.36,0:04:22.07,Default,Mom,0000,0000,0000,,Bố sẽ về ngay thôi.
Dialogue: 0,0:04:22.69,0:04:24.20,Default,Mom,0000,0000,0000,,Các con mau ăn xong bữa đi.
Dialogue: 0,0:04:28.37,0:04:29.70,Think,Ed,0000,0000,0000,,Mẹ...
Dialogue: 0,0:04:31.58,0:04:32.95,Think,Ed,0000,0000,0000,,Mẹ.
Dialogue: 0,0:04:34.87,0:04:36.00,Think,Ed,0000,0000,0000,,Mẹ ơi!
Dialogue: 0,0:04:43.42,0:04:44.34,Think,Ed,0000,0000,0000,,Mẹ ơi!!!
Dialogue: 0,0:04:56.85,0:05:00.48,Default,Al,0000,0000,0000,,Thế... bố con có nói gì về Hòn Đá không ạ?
Dialogue: 0,0:05:01.07,0:05:03.48,Default,Izumi,0000,0000,0000,,Ông ấy bảo điều ước bấy lâu nay của mình sắp thành hiện thực,
Dialogue: 0,0:05:03.90,0:05:05.49,Default,Izumi,0000,0000,0000,,vừa nói vừa cười rất vui vẻ.
Dialogue: 0,0:05:08.66,0:05:09.49,Default,Ed,0000,0000,0000,,Á!
Dialogue: 0,0:05:10.49,0:05:11.62,Default,Izumi,0000,0000,0000,,Đến giờ ăn rồi!
Dialogue: 0,0:05:12.20,0:05:13.83,Default,All,0000,0000,0000,,Dạ...
Dialogue: 0,0:05:19.00,0:05:20.38,Default,Sig,0000,0000,0000,,Al không ăn à?
Dialogue: 0,0:05:20.38,0:05:21.88,Default,Al,0000,0000,0000,,Không ạ!
Dialogue: 0,0:05:21.88,0:05:24.30,Default,Al,0000,0000,0000,,Trên tàu cháu ăn nhiều quá rồi...
Dialogue: 0,0:05:24.30,0:05:27.03,Default,Ed,0000,0000,0000,,Này Al, kể cho sư phụ nghe chuyện bọn mình
Dialogue: 0,0:05:27.03,0:05:28.84,Default,Ed,0000,0000,0000,,thấy em bé ra đời ở Thung lũng Rush đi!
Dialogue: 0,0:05:28.84,0:05:30.01,Default,Al,0000,0000,0000,,Đúng rồi!
Dialogue: 0,0:05:30.01,0:05:33.72,Default,Al,0000,0000,0000,,Sư phụ, bọn con đã giúp đỡ đẻ đấy!
Dialogue: 0,0:05:33.72,0:05:37.39,Default,Ed,0000,0000,0000,,Ngốc quá, vậy mà gọi là "giúp" sao được.
Dialogue: 0,0:05:38.31,0:05:41.94,Default,Al,0000,0000,0000,,Cả gia đình đồng tâm hiệp lực, người mẹ thì gắng hết sức mình,
Dialogue: 0,0:05:41.94,0:05:45.49,Default,Al,0000,0000,0000,,và nhờ mọi người cầu chúc mà một sinh mạng đã ra đời.
Dialogue: 0,0:05:45.90,0:05:47.03,Default,Izumi,0000,0000,0000,,Đúng vậy đấy.
Dialogue: 0,0:05:47.65,0:05:50.24,Default,Izumi,0000,0000,0000,,Các con cũng được sinh ra như thế.
Dialogue: 0,0:05:50.24,0:05:52.49,Default,Izumi,0000,0000,0000,,Hãy tự hào rằng mình đã được ra đời.
Dialogue: 0,0:06:01.79,0:06:02.88,Default,Al,0000,0000,0000,,Anh hai.
Dialogue: 0,0:06:02.88,0:06:03.80,Default,Ed,0000,0000,0000,,Hử?
Dialogue: 0,0:06:04.13,0:06:05.76,Default,Al,0000,0000,0000,,Sư phụ vẫn chẳng hề thay đổi nhỉ?
Dialogue: 0,0:06:06.05,0:06:07.30,Default,Ed,0000,0000,0000,,Ừ.
Dialogue: 0,0:06:07.30,0:06:09.51,Default,Ed,0000,0000,0000,,Từ ngày đầu gặp mặt tới bây giờ, sư phụ vẫn thế.
Dialogue: 0,0:06:22.27,0:06:23.11,Default,Man,0000,0000,0000,,Cố gắng lên!
Dialogue: 0,0:06:23.11,0:06:24.11,Default,Man2,0000,0000,0000,,Đem thêm bao cát ra đây!
Dialogue: 0,0:06:24.11,0:06:25.44,Default,Man3,0000,0000,0000,,Đê sắp vỡ rồi!
Dialogue: 0,0:06:30.82,0:06:33.62,Default,Man,0000,0000,0000,,Đê sắp vỡ rồi! Mau chạy lên chỗ cao đi!
Dialogue: 0,0:06:34.24,0:06:35.83,Default,Al,0000,0000,0000,,Anh ơi, nhìn kìa!
Dialogue: 0,0:06:40.00,0:06:41.46,Default,Man,0000,0000,0000,,Này, nguy hiểm lắm!
Dialogue: 0,0:07:08.28,0:07:10.07,Default,Izumi,0000,0000,0000,,Như này là đủ cầm cự rồi đó.
Dialogue: 0,0:07:11.40,0:07:13.07,Default,Man,0000,0000,0000,,Cô là ai vậy?
Dialogue: 0,0:07:13.70,0:07:15.74,Default,Izumi,0000,0000,0000,,Một bà nội trợ vô tình đi ngang qua!
Dialogue: 0,0:07:22.25,0:07:24.21,Default,Ed,0000,0000,0000,,Cô ơi, cô nhận bọn cháu làm đệ tử đi!
Dialogue: 0,0:07:30.13,0:07:31.88,Default,Ed,0000,0000,0000,,Xin cô đấy!
Dialogue: 0,0:07:31.88,0:07:34.93,Default,Izumi,0000,0000,0000,,Tai "cô" không được tốt lắm...
Dialogue: 0,0:07:35.35,0:07:37.43,Default,Izumi,0000,0000,0000,,Các cháu nhắc lại được không?
Dialogue: 0,0:07:38.47,0:07:40.39,Default,Ed,0000,0000,0000,,Xin sửa lại!
Dialogue: 0,0:07:40.39,0:07:42.48,Default,Al,0000,0000,0000,,"Chị" ơi, xin hãy nhận bọn em làm đệ tử!
Dialogue: 0,0:07:42.48,0:07:43.39,Default,Izumi,0000,0000,0000,,Không được!
Dialogue: 0,0:07:43.39,0:07:44.56,Default,Both,0000,0000,0000,,Tại sao ạ!?
Dialogue: 0,0:07:44.56,0:07:46.02,Default,Izumi,0000,0000,0000,,Ta không nhận học trò đâu.
Dialogue: 0,0:07:46.44,0:07:47.86,Default,Izumi,0000,0000,0000,,Với lại, ta đang đi du lịch với chồng!
Dialogue: 0,0:07:47.86,0:07:49.69,Default,Ed,0000,0000,0000,,Nhận bọn em làm đệ tử đi mà!
Dialogue: 0,0:07:49.69,0:07:51.90,Default,Izumi,0000,0000,0000,,Giời ơi, lũ này dai quá!
Dialogue: 0,0:07:51.90,0:07:53.36,Default,Izumi,0000,0000,0000,,Đã xin phép bố mẹ hẳn hoi chưa?
Dialogue: 0,0:07:53.36,0:07:56.24,Default,Man,0000,0000,0000,,Chuyện đó... chúng nó không còn cha mẹ nữa.
Dialogue: 0,0:08:02.29,0:08:04.25,Default,Izumi,0000,0000,0000,,Nghe vậy thì ai mà không mềm lòng đây...
Dialogue: 0,0:08:13.68,0:08:15.26,Default,Izumi,0000,0000,0000,,Hãy tự mình sống sót!
Dialogue: 0,0:08:15.43,0:08:16.43,Default,Both,0000,0000,0000,,Hả?
Dialogue: 0,0:08:16.97,0:08:18.30,Default,Izumi,0000,0000,0000,,Đây là vòng sơ khảo.
Dialogue: 0,0:08:18.81,0:08:20.64,Default,Izumi,0000,0000,0000,,Nếu hai đứa vượt qua nổi, ta sẽ vào khóa học chính thức.
Dialogue: 0,0:08:21.10,0:08:24.44,Default,Izumi,0000,0000,0000,,Ở vòng này ta cấm hai đứa dùng giả kim thuật.
Dialogue: 0,0:08:24.81,0:08:25.69,Default,Both,0000,0000,0000,,Cái gì?
Dialogue: 0,0:08:26.27,0:08:28.57,Default,Izumi,0000,0000,0000,,"Một là Tất Cả, Tất Cả là Một."
Dialogue: 0,0:08:28.94,0:08:31.32,Default,Izumi,0000,0000,0000,,Trong một tháng, hãy tìm ra ý nghĩa của câu đó.
Dialogue: 0,0:08:32.07,0:08:35.99,Default,Izumi,0000,0000,0000,,Nếu không được, ta sẽ gửi hai đứa về Resembool.
Dialogue: 0,0:08:38.95,0:08:39.74,Default,Izumi,0000,0000,0000,,Chào!
Dialogue: 0,0:08:42.08,0:08:43.87,Default,Both,0000,0000,0000,,HẢ!!!
Dialogue: 0,0:08:43.87,0:08:47.21,Default,Both,0000,0000,0000,,Chuyện quái gì thế này!?
Dialogue: 0,0:08:51.34,0:08:53.72,Default,Ed,0000,0000,0000,,Đói bụng quá...
Dialogue: 0,0:08:53.72,0:08:56.01,Default,Ed,0000,0000,0000,,Em muốn ngủ trên giường...
Dialogue: 0,0:09:03.10,0:09:06.02,Default,Ed,0000,0000,0000,,Đây mà gọi là huấn luyện được sao!?
Dialogue: 0,0:09:10.57,0:09:13.40,Default,Al,0000,0000,0000,,Đói quá đi...
Dialogue: 0,0:09:20.78,0:09:22.87,Default,Sig,0000,0000,0000,,Không biết lũ nhóc có sao không nhỉ?
Dialogue: 0,0:09:23.79,0:09:26.41,Default,Izumi,0000,0000,0000,,Kinh nghiệm thực tiễn là thứ quan trọng không thể thay thế.
Dialogue: 0,0:09:26.91,0:09:29.62,Default,Izumi,0000,0000,0000,,Nếu muốn chúng nhập tâm nền tảng của thuật giả kim,
Dialogue: 0,0:09:29.62,0:09:31.59,Default,Izumi,0000,0000,0000,,thì đây là cách hay nhất rồi.
Dialogue: 0,0:09:32.17,0:09:34.21,Default,Izumi,0000,0000,0000,,Nếu sau lần này chúng không học được điều gì,
Dialogue: 0,0:09:34.21,0:09:37.18,Default,Izumi,0000,0000,0000,,thì tài năng của chúng nó cũng chỉ đến thế mà thôi.
Dialogue: 0,0:09:37.76,0:09:39.47,Default,Izumi,0000,0000,0000,,Chúng nó sẽ phải từ bỏ ý định bái sư.
Dialogue: 0,0:09:42.72,0:09:46.48,Default,Sig,0000,0000,0000,,Anh là anh đang lo cho tính mạng chúng nó ấy.
Dialogue: 0,0:09:46.68,0:09:50.43,Default,Izumi,0000,0000,0000,,Em hồi đi tu luyện còn bị vứt vào núi Briggs,
Dialogue: 0,0:09:50.43,0:09:52.07,Default,Izumi,0000,0000,0000,,sống qua một tháng mùa đông ở đó cơ mà!
Dialogue: 0,0:09:52.98,0:09:55.74,Default,Sig,0000,0000,0000,,Đừng có đem người thường ra so với em chứ.
Dialogue: 0,0:09:55.74,0:09:57.98,Default,Izumi,0000,0000,0000,,Trên đảo có rất nhiều thứ ăn được.
Dialogue: 0,0:09:57.98,0:09:59.74,Default,Izumi,0000,0000,0000,,Chúng sẽ sống thôi.
Dialogue: 0,0:10:03.24,0:10:04.62,Default,Both,0000,0000,0000,,Bắt được rồi!
Dialogue: 0,0:10:06.00,0:10:08.12,Default,Al,0000,0000,0000,,Làm thế nào để ăn đây?
Dialogue: 0,0:10:08.12,0:10:10.50,Default,Ed,0000,0000,0000,,Ừm... Chặt nó ra.
Dialogue: 0,0:10:10.50,0:10:11.75,Default,Al,0000,0000,0000,,Chặt nó ra à...
Dialogue: 0,0:10:21.14,0:10:22.30,Default,Al,0000,0000,0000,,Em chịu thôi!
Dialogue: 0,0:10:22.30,0:10:23.76,Default,Al,0000,0000,0000,,Anh làm đi!
Dialogue: 0,0:10:23.76,0:10:25.85,Default,Ed,0000,0000,0000,,Anh bắt nó rồi thì em phải giết nó chứ.
Dialogue: 0,0:10:25.85,0:10:28.18,Default,Al,0000,0000,0000,,Lúc nào anh cũng bắt em làm chuyện anh không muốn làm!
Dialogue: 0,0:10:33.90,0:10:35.90,Default,Both,0000,0000,0000,,Quay lại đây!!!
Dialogue: 0,0:10:44.20,0:10:45.74,Default,Ed,0000,0000,0000,,Cáo con à...
Dialogue: 0,0:10:49.46,0:10:52.12,Default,Ed,0000,0000,0000,,Đừng ăn thịt nữa... Ăn cá đi.
Dialogue: 0,0:10:56.05,0:10:58.34,Default,Ed,0000,0000,0000,,Làm thế nào để bắt cá đây!?
Dialogue: 0,0:10:58.34,0:11:01.05,Default,Ed,0000,0000,0000,,Không cần câu, không dây câu cũng chẳng có móc!
Dialogue: 0,0:11:09.64,0:11:14.02,Default,Al,0000,0000,0000,,Đồ ăn không có, lửa cũng không, chẳng có cái gì hết...
Dialogue: 0,0:11:14.02,0:11:15.40,Default,Ed,0000,0000,0000,,Đừng nói nữa!
Dialogue: 0,0:11:51.31,0:11:51.98,Default,Al,0000,0000,0000,,Nào!
Dialogue: 0,0:11:53.19,0:11:55.19,Default,Al,0000,0000,0000,,Anh làm gì vậy, anh hai!?
Dialogue: 0,0:12:04.91,0:12:06.12,Default,Al,0000,0000,0000,,Anh à?
Dialogue: 0,0:12:12.91,0:12:14.21,Default,Ed,0000,0000,0000,,Chua quá!
Dialogue: 0,0:12:20.34,0:12:22.72,Default,Ed,0000,0000,0000,,Mình... vẫn sống.
Dialogue: 0,0:12:24.30,0:12:26.14,Default,Ed,0000,0000,0000,,Ăn kiến để sống.
Dialogue: 0,0:12:32.81,0:12:34.85,Default,Ed,0000,0000,0000,,Ăn các sinh mạng khác và sống.
Dialogue: 0,0:12:37.23,0:12:38.23,Default,Ed,0000,0000,0000,,Sống...
Dialogue: 0,0:12:41.61,0:12:42.94,Default,Ed,0000,0000,0000,,Mình không thể chết ở đây được!
Dialogue: 0,0:12:42.94,0:12:43.78,Default,Al,0000,0000,0000,,Đúng!
Dialogue: 0,0:12:51.99,0:12:53.29,Default,Ed,0000,0000,0000,,Xin lỗi mày nhé...
Dialogue: 0,0:12:59.25,0:13:01.46,Default,Al,0000,0000,0000,,Sắp được rồi, anh hai.
Dialogue: 0,0:13:08.18,0:13:10.26,Default,Both,0000,0000,0000,,Được rồi!
Dialogue: 0,0:13:31.16,0:13:33.33,Default,Al,0000,0000,0000,,Ngày mai là cuối tháng rồi...
Dialogue: 0,0:13:34.29,0:13:35.96,Default,Al,0000,0000,0000,,Anh này.
Dialogue: 0,0:13:35.96,0:13:39.88,Default,Al,0000,0000,0000,,"Một là Tất Cả, Tất Cả là Một". Anh đã tìm ra câu trả lời cho nó chưa?
Dialogue: 0,0:13:42.04,0:13:46.72,Default,Al,0000,0000,0000,,Em cứ nghĩ mãi nhưng cũng chỉ hiểu lơ mơ thôi.
Dialogue: 0,0:13:47.55,0:13:49.47,Default,Ed,0000,0000,0000,,Anh không chắc lắm, nhưng mà...
Dialogue: 0,0:13:50.09,0:13:54.22,Default,Ed,0000,0000,0000,,Em có nhớ lúc anh đói quá đã ăn kiến không?
Dialogue: 0,0:13:54.39,0:13:55.85,Default,Al,0000,0000,0000,,Anh có ăn à?
Dialogue: 0,0:13:55.85,0:13:57.77,Default,Ed,0000,0000,0000,,Ừ, ăn rồi.
Dialogue: 0,0:13:57.77,0:13:59.73,Default,Ed,0000,0000,0000,,Chua loét ra ấy.
Dialogue: 0,0:13:59.98,0:14:01.94,Default,Ed,0000,0000,0000,,Lúc đó, anh chợt nghĩ thế này.
Dialogue: 0,0:14:02.40,0:14:04.82,Default,Ed,0000,0000,0000,,Nếu anh không ăn chúng và chịu chết đói,
Dialogue: 0,0:14:04.82,0:14:06.82,Default,Ed,0000,0000,0000,,lũ cáo và kiến sẽ tới ăn thịt anh.
Dialogue: 0,0:14:07.44,0:14:09.53,Default,Ed,0000,0000,0000,,Anh sẽ quay về với đất và trở thành cây cỏ.
Dialogue: 0,0:14:09.99,0:14:11.82,Default,Ed,0000,0000,0000,,Rồi lũ thỏ sẽ ăn cây cỏ đó.
Dialogue: 0,0:14:11.82,0:14:13.62,Default,Al,0000,0000,0000,,Chuỗi thức ăn hả?
Dialogue: 0,0:14:13.62,0:14:14.54,Default,Ed,0000,0000,0000,,Ừ.
Dialogue: 0,0:14:14.54,0:14:15.74,Default,Ed,0000,0000,0000,,Nhưng không chỉ như vậy đâu.
Dialogue: 0,0:14:16.20,0:14:20.54,Default,Ed,0000,0000,0000,,Ngay hòn đảo này, có thể ngày xưa nó lại chìm dưới nước.
Dialogue: 0,0:14:20.54,0:14:24.75,Default,Ed,0000,0000,0000,,Và sau nhiều năm nữa, biết đâu nó sẽ trở thành một đỉnh núi cao.
Dialogue: 0,0:14:24.75,0:14:27.30,Default,Al,0000,0000,0000,,Mọi thứ trên đời này đều liên hệ với nhau à?
Dialogue: 0,0:14:27.76,0:14:32.09,Default,Ed,0000,0000,0000,,Vạn vật đều nằm trong một dòng chảy mà ta không thể thấy được.
Dialogue: 0,0:14:32.89,0:14:36.77,Default,Ed,0000,0000,0000,,Không biết nên gọi dòng chảy ấy là "Vũ Trụ" hay là "Thế Giới",
Dialogue: 0,0:14:37.39,0:14:42.15,Default,Ed,0000,0000,0000,,nhưng so với thứ lớn lao ấy, anh và em chỉ như con kiến thôi.
Dialogue: 0,0:14:42.98,0:14:45.65,Default,Ed,0000,0000,0000,,Một cá nhân nhỏ trong dòng chảy ấy.
Dialogue: 0,0:14:46.07,0:14:48.36,Default,Ed,0000,0000,0000,,Chúng mình là "Một" trong "Tất Cả".
Dialogue: 0,0:14:48.94,0:14:54.62,Default,Ed,0000,0000,0000,,Nhưng "Tất Cả" tồn tại là do nhiều cá nhân đơn lẻ hợp lại.
Dialogue: 0,0:15:01.25,0:15:02.58,Default,Izumi,0000,0000,0000,,Hôm nay là ngày hẹn rồi.
Dialogue: 0,0:15:02.58,0:15:06.05,Default,Izumi,0000,0000,0000,,Mau nói cho ta nghe câu trả lời của "Một là Tất Cả, Tất Cả là Một".
Dialogue: 0,0:15:06.46,0:15:07.96,Default,Al,0000,0000,0000,,"Tất Cả" là thế giới!
Dialogue: 0,0:15:07.96,0:15:09.55,Default,Ed,0000,0000,0000,,Còn "Một" là con ạ!
Dialogue: 0,0:15:14.39,0:15:16.56,Default,Izumi,0000,0000,0000,,Tốt! Từ ngày mai bắt đầu huấn luyện chính thức.
Dialogue: 0,0:15:17.64,0:15:19.48,Default,Both,0000,0000,0000,,Hoan hô!
Dialogue: 0,0:15:22.60,0:15:25.61,Default,Izumi,0000,0000,0000,,Căn bản của luyện thành trận là sức mạnh của vòng tròn.
Dialogue: 0,0:15:25.61,0:15:28.40,Default,Izumi,0000,0000,0000,,Vòng tròn biểu trưng cho sự luân chuyển sức mạnh,
Dialogue: 0,0:15:28.40,0:15:30.96,Default,Izumi,0000,0000,0000,,và bằng cách vẽ biểu tượng cấu trúc vào đó,
Dialogue: 0,0:15:30.96,0:15:33.45,Default,Izumi,0000,0000,0000,,ta có thể phát động sức mạnh ấy.
Dialogue: 0,0:15:40.87,0:15:42.75,Default,Izumi,0000,0000,0000,,Đây cũng là ví dụ về luân chuyển sức mạnh.
Dialogue: 0,0:15:44.42,0:15:46.21,Default,Izumi,0000,0000,0000,,Tự mình trải nghiệm sẽ thấm lâu hơn.
Dialogue: 0,0:15:52.72,0:15:53.84,Default,Izumi,0000,0000,0000,,Giờ thì...
Dialogue: 0,0:15:53.84,0:15:56.68,Default,Izumi,0000,0000,0000,,Trong khi chờ cơm trưa xong thì ôn lại cho kĩ đi!
Dialogue: 0,0:15:58.81,0:16:00.18,Default,Al,0000,0000,0000,,Để xem...
Dialogue: 0,0:16:00.18,0:16:02.85,Default,Al,0000,0000,0000,,Vòng tròn biểu trưng cho sự luân chuyển sức mạnh,
Dialogue: 0,0:16:02.85,0:16:05.62,Default,Al,0000,0000,0000,,và bằng cách vẽ biểu tượng cấu trúc vào đó,
Dialogue: 0,0:16:05.62,0:16:08.48,Default,Al,0000,0000,0000,,ta có thể phát động sức mạnh ấy.
Dialogue: 0,0:16:09.65,0:16:13.32,Default,Al,0000,0000,0000,,Nhưng sư phụ chỉ cần chập tay vào là có thể chuyển hóa mà?
Dialogue: 0,0:16:15.86,0:16:18.08,Default,Al,0000,0000,0000,,Sư phụ không cần vẽ biểu tượng cấu trúc sao ạ?
Dialogue: 0,0:16:19.95,0:16:23.08,Default,Izumi,0000,0000,0000,,Bản thân ta cũng là một biểu tượng cấu trúc.
Dialogue: 0,0:16:23.08,0:16:25.00,Default,Ed,0000,0000,0000,,Phải thế nào mới làm được thế ạ?
Dialogue: 0,0:16:28.46,0:16:32.01,Default,Izumi,0000,0000,0000,,Nếu đạt tới "Chân Lý", các con cũng sẽ làm được như vậy.
Dialogue: 0,0:16:37.64,0:16:40.51,Default,Ed,0000,0000,0000,,Sư phụ cũng đã nhìn thấy "Chân Lý"...
Dialogue: 0,0:16:50.69,0:16:53.28,Default,Izumi,0000,0000,0000,,Thế hai đứa định hỏi ta chuyện gì?
Dialogue: 0,0:16:53.28,0:16:54.53,Default,Ed,0000,0000,0000,,À...
Dialogue: 0,0:17:09.50,0:17:12.05,Default,Izumi,0000,0000,0000,,Biết ngay, ngươi có thể chuyển hóa mà không cần biểu tượng cấu trúc!
Dialogue: 0,0:17:14.09,0:17:16.34,Default,Izumi,0000,0000,0000,,Thêm nữa, Alphonse chỉ là một bộ giáp trống!
Dialogue: 0,0:17:16.34,0:17:18.89,Default,Izumi,0000,0000,0000,,Còn ngươi có tay và chân là automail!
Dialogue: 0,0:17:18.89,0:17:20.47,Default,Ed,0000,0000,0000,,Làm sao sư phụ biết ạ!?
Dialogue: 0,0:17:20.47,0:17:22.51,Default,Izumi,0000,0000,0000,,Qua lại vài chiêu là ta biết ngay!
Dialogue: 0,0:17:24.43,0:17:26.52,Default,Izumi,0000,0000,0000,,Ngươi đã thấy "nó" rồi phải không?
Dialogue: 0,0:17:28.98,0:17:30.15,Default,Izumi,0000,0000,0000,,Có phải không!?
Dialogue: 0,0:17:30.15,0:17:31.44,Default,Ed,0000,0000,0000,,Dạ phải!
Dialogue: 0,0:17:34.74,0:17:37.03,Default,Izumi,0000,0000,0000,,Cả thầy cả trò đều ngốc nghếch như nhau.
Dialogue: 0,0:17:47.33,0:17:48.50,Default,Ed,0000,0000,0000,,Sư phụ...
Dialogue: 0,0:17:49.25,0:17:50.50,Default,Ed,0000,0000,0000,,Vì sư phụ cũng nhìn thấy thứ đó...
Dialogue: 0,0:18:30.12,0:18:33.88,Default,Izumi,0000,0000,0000,,Vợ chồng ta không hiểu sao mà mãi không có con.
Dialogue: 0,0:18:35.42,0:18:39.59,Default,Izumi,0000,0000,0000,,Đến khi tưởng như đã được toại nguyện thì ta lại ốm nặng.
Dialogue: 0,0:18:41.76,0:18:46.18,Default,Izumi,0000,0000,0000,,Vì thế, con ta đã chết ngay từ khi chưa ra đời.
Dialogue: 0,0:18:47.27,0:18:48.27,Default,Izumi,0000,0000,0000,,Thế là...
Dialogue: 0,0:18:49.02,0:18:50.52,Default,Izumi,0000,0000,0000,,Ta đã phạm phải điều cấm.
Dialogue: 0,0:18:52.56,0:18:55.36,Default,Izumi,0000,0000,0000,,Vì thế mà ta đã bị lấy đi khá nhiều nội tạng.
Dialogue: 0,0:18:56.19,0:18:58.03,Default,Izumi,0000,0000,0000,,Ta đúng là ngu ngốc.
Dialogue: 0,0:19:03.91,0:19:06.45,Default,Izumi,0000,0000,0000,,Đáng lẽ ta nên cho các con biết chuyện từ trước.
Dialogue: 0,0:19:08.79,0:19:09.91,Default,Izumi,0000,0000,0000,,Chắc là khổ sở lắm nhỉ.
Dialogue: 0,0:19:12.75,0:19:14.84,Default,Ed,0000,0000,0000,,Không đâu ạ!
Dialogue: 0,0:19:14.84,0:19:16.42,Default,Ed,0000,0000,0000,,Bọn con tự làm tự chịu mà.
Dialogue: 0,0:19:16.92,0:19:18.92,Default,Ed,0000,0000,0000,,Vậy nên cũng không thấy khổ sở gì lắm...
Dialogue: 0,0:19:18.92,0:19:21.93,Default,Al,0000,0000,0000,,Con thường nghĩ về những thứ mình sẽ ăn khi lấy lại được cơ thể.
Dialogue: 0,0:19:21.93,0:19:24.30,Default,Al,0000,0000,0000,,Đó cũng là cách tự tạo động lực cho mình đấy ạ!
Dialogue: 0,0:19:26.22,0:19:27.56,Default,Al,0000,0000,0000,,Nhỉ, anh hai?
Dialogue: 0,0:19:27.56,0:19:28.18,Default,Ed,0000,0000,0000,,Ừ!
Dialogue: 0,0:19:28.18,0:19:29.60,Default,Ed,0000,0000,0000,,Em nói phải lắm!
Dialogue: 0,0:19:29.60,0:19:31.39,Default,Izumi,0000,0000,0000,,Lũ đệ tử ngốc...
Dialogue: 0,0:19:36.48,0:19:38.07,Default,Izumi,0000,0000,0000,,Không cần phải giả bộ làm gì đâu.
Dialogue: 0,0:19:52.12,0:19:53.62,Default,Ed,0000,0000,0000,,Con xin lỗi...
Dialogue: 0,0:19:54.75,0:19:55.88,Default,Al,0000,0000,0000,,Chúng con xin lỗi...
Dialogue: 0,0:19:55.88,0:19:56.63,Default,Ed,0000,0000,0000,,Xin lỗi...
Dialogue: 0,0:19:58.09,0:19:58.88,Default,Al,0000,0000,0000,,Chúng con xin lỗi...
Dialogue: 0,0:19:58.88,0:19:59.67,Default,Ed,0000,0000,0000,,Xin lỗi...
Dialogue: 0,0:20:00.71,0:20:01.76,Default,Al,0000,0000,0000,,Xin lỗi...
Dialogue: 0,0:20:01.76,0:20:02.88,Default,Ed,0000,0000,0000,,Xin lỗi...
Dialogue: 0,0:20:07.51,0:20:12.77,Default,Ed,0000,0000,0000,,Thế giới này vận động tuân theo một quy luật lớn lao khó bề tưởng tượng.
Dialogue: 0,0:20:13.19,0:20:17.02,Default,Ed,0000,0000,0000,,Nghiên cứu sự vận động ấy, phân tích và tái cấu trúc.
Dialogue: 0,0:20:17.65,0:20:19.52,Default,Ed,0000,0000,0000,,Đó chính là giả kim thuật.
Dialogue: 0,0:20:19.90,0:20:22.57,Default,Ed,0000,0000,0000,,Và đó cũng chính là hành động "sống" trên cõi đời này.
Dialogue: 0,0:20:23.53,0:20:27.87,Default,Al,0000,0000,0000,,Nguyên tắc cơ bản của giả kim thuật là phân giải và tái cấu trúc mọi vật...
Dialogue: 0,0:20:27.87,0:20:30.12,Default,Al,0000,0000,0000,,Nó cũng gần giống như chuỗi thức ăn vậy.
Dialogue: 0,0:20:30.12,0:20:33.35,Default,Ed,0000,0000,0000,,Khi ăn thịt thỏ, ta sẽ phân giải thịt nó
Dialogue: 0,0:20:33.35,0:20:35.62,Default,Ed,0000,0000,0000,,và tái cấu trúc nó thành một phần của cơ thể.
Dialogue: 0,0:20:36.04,0:20:40.55,Default,Ed,0000,0000,0000,,Con thỏ cũng tái cấu trúc lá cỏ thành một phần cơ thể nó.
Dialogue: 0,0:20:41.34,0:20:45.22,Default,Ed,0000,0000,0000,,Giả kim thuật chính là cuộc sống của chúng ta.
Dialogue: 0,0:20:59.07,0:21:01.69,Default,Nar,0000,0000,0000,,Có một kẻ không bao giờ ngừng thèm khát tất cả.
Dialogue: 0,0:21:01.69,0:21:03.99,Default,Nar,0000,0000,0000,,Tên hắn là Greed.
Dialogue: 0,0:21:04.20,0:21:05.83,Default,Nar,0000,0000,0000,,Dù là bạn hay là thù,
Dialogue: 0,0:21:05.83,0:21:10.85,Default,Nar,0000,0000,0000,,kẻ đứng trước mắt Ed và Al cũng mang một cơ thể
Dialogue: 0,0:21:10.85,0:21:11.87,Default,Nar,0000,0000,0000,,sinh ra để chiến đấu.
Dialogue: 0,0:21:12.66,0:21:17.12,Default,Nar,0000,0000,0000,,Lần tới, Cang Giả Kim Thuật Sư - Fullmetal Alchemist:
