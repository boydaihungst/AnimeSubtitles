Dialogue: 0,0:00:14.99,0:00:15.99,Default,Lin,0000,0000,0000,,Ed!
Dialogue: 0,0:00:15.99,0:00:16.99,Default,Envy,0000,0000,0000,,Bọn chuột nhắt!
Dialogue: 0,0:00:22.50,0:00:23.41,Default,Ed,0000,0000,0000,,Ling!
Dialogue: 0,0:00:25.25,0:00:26.71,Default,Ed,0000,0000,0000,,Tên khốn!
Dialogue: 0,0:00:28.75,0:00:30.50,Default,Guy,0000,0000,0000,,Giết... tôi đi...
Dialogue: 0,0:00:32.63,0:00:34.13,Default,Guy,0000,0000,0000,,Cứu tôi với...
Dialogue: 0,0:00:34.13,0:00:36.51,Default,Guy,0000,0000,0000,,Giết... tôi đi!
Dialogue: 0,0:00:36.51,0:00:37.80,Default,Guy,0000,0000,0000,,Xin anh đấy...
Dialogue: 0,0:00:44.02,0:00:46.10,Default,Guy,0000,0000,0000,,Tôi muốn chết...
Dialogue: 0,0:00:44.60,0:00:46.73,Default-alt,Boy,0000,0000,0000,,Mẹ ơi!
Dialogue: 0,0:01:00.49,0:01:02.08,Default,Lin,0000,0000,0000,,Anh đứng ngây ra đó làm gì thế đồ ngốc!?
Dialogue: 0,0:01:02.62,0:01:04.04,Default,Lin,0000,0000,0000,,Sao lại ngừng tay hả!?
Dialogue: 0,0:01:04.96,0:01:05.91,Default,Ed,0000,0000,0000,,Có người...
Dialogue: 0,0:01:06.33,0:01:08.83,Default,Ed,0000,0000,0000,,Có người ở bên trong hắn...
Dialogue: 0,0:01:09.50,0:01:11.05,Default,Ed,0000,0000,0000,,Họ muốn tôi cứu họ.
Dialogue: 0,0:01:11.05,0:01:13.34,Default,Lin,0000,0000,0000,,Không phải! Chúng chỉ là quái vật thôi!
Dialogue: 0,0:01:14.42,0:01:15.09,Default,Ed,0000,0000,0000,,Nhưng...
Dialogue: 0,0:01:15.97,0:01:17.09,Default,Lin,0000,0000,0000,,Bình tĩnh lại đi!
Dialogue: 0,0:01:17.09,0:01:18.59,Default,Lin,0000,0000,0000,,Chúng chỉ là quái vật!
Dialogue: 0,0:01:20.22,0:01:21.26,Default,Guy,0000,0000,0000,,Giết tôi đi!
Dialogue: 0,0:01:21.26,0:01:22.39,Default,Boy,0000,0000,0000,,Mẹ ơi!
Dialogue: 0,0:01:22.39,0:01:23.93,Default,Mom,0000,0000,0000,,Trả lại con cho tôi!
Dialogue: 0,0:01:24.85,0:01:26.56,Default,Ed,0000,0000,0000,,Im đi! Thôi đi!
Dialogue: 0,0:01:26.56,0:01:27.64,Default,Guy,0000,0000,0000,,Bố ơi!
Dialogue: 0,0:01:27.64,0:01:28.69,Default,Guy2,0000,0000,0000,,Đau quá...
Dialogue: 0,0:01:29.23,0:01:30.56,Default,Guy,0000,0000,0000,,Cứu tôi với!
Dialogue: 0,0:01:30.56,0:01:31.77,Default,Ed,0000,0000,0000,,Đã bảo là thôi đi cơ mà!
Dialogue: 0,0:01:31.40,0:01:32.57,Default-alt,Nina,0000,0000,0000,,Anh ơi.
Dialogue: 0,0:01:34.15,0:01:35.24,Default,Nina,0000,0000,0000,,Mình cùng chơi nào.
Dialogue: 0,0:01:37.99,0:01:38.99,Default,Nina,0000,0000,0000,,Cùng chơi nào.
Dialogue: 0,0:01:43.16,0:01:44.70,Default,Envy,0000,0000,0000,,Hết giờ chơi rồi.
Dialogue: 0,0:01:57.34,0:01:58.55,Default,Ed,0000,0000,0000,,Khốn...
Dialogue: 0,0:01:59.13,0:02:00.64,Default,Ed,0000,0000,0000,,kiếp...
Dialogue: 0,0:02:08.02,0:02:08.85,Default,Woman,0000,0000,0000,,Cứu tôi với...
Dialogue: 0,0:02:08.85,0:02:11.81,Default,Guy,0000,0000,0000,,Anh làm sao hiểu được nỗi đau này...
Dialogue: 0,0:02:11.81,0:02:13.32,Default,Lin,0000,0000,0000,,Ed! Tỉnh lại đi!
Dialogue: 0,0:02:13.98,0:02:15.36,Default,Lin,0000,0000,0000,,Mở mắt ra đi!
Dialogue: 0,0:02:15.36,0:02:16.86,Default,Guy,0000,0000,0000,,Hãy đến đây!
Dialogue: 0,0:02:17.03,0:02:17.82,Default,Lin,0000,0000,0000,,Ed!
Dialogue: 0,0:02:23.20,0:02:24.03,Default,Lin,0000,0000,0000,,Ed!
