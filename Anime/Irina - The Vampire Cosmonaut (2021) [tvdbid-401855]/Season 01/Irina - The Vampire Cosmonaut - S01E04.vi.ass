Dialogue: 0,0:00:00.53,0:00:02.82,Default,,0,0,0,,Trung úy Leps,
Dialogue: 0,0:00:00.53,0:00:02.82,Default,,0,0,0,,{\an8}[11:15 sáng, ngày 15 tháng 11]
Dialogue: 0,0:00:02.82,0:00:07.78,Default,,0,0,0,,{\an8}[Phòng Giám đốc, Trung tâm huấn luyện]
Dialogue: 0,0:00:02.82,0:00:07.78,Default,,0,0,0,,ngày bay của N44 đã ấn định\N vào ngày 12 tháng 12.
Dialogue: 0,0:00:07.78,0:00:10.94,Default,,0,0,0,,Huấn luyện tại đây\Ncho đến một tuần trước khi cất cánh,
Dialogue: 0,0:00:10.94,0:00:13.16,Default,,0,0,0,,có nghĩa là chỉ còn ba tuần nữa.
Dialogue: 0,0:00:13.16,0:00:15.57,Default,,0,0,0,,Tình hình huấn luyện của N44 sao rồi?
Dialogue: 0,0:00:15.57,0:00:16.78,Default,,0,0,0,,Thuận lợi lắm ạ.
Dialogue: 0,0:00:16.78,0:00:19.74,Default,,0,0,0,,Có thể hoàn thành\Ntất cả các bài huấn luyện trong thời hạn.
Dialogue: 0,0:00:19.74,0:00:21.99,Default,,0,0,0,,Vậy sao? Tôi hiểu rồi.
Dialogue: 0,0:00:21.99,0:00:23.45,Default,,0,0,0,,Trung tướng Victor,
Dialogue: 0,0:00:23.45,0:00:26.65,Default,,0,0,0,,xin hỏi tên lửa và tàu vũ trụ\Ntiến triển thế nào rồi ạ?
Dialogue: 0,0:00:32.78,0:00:34.44,Default,,0,0,0,,{\an8}[1:30 chiều]
Dialogue: 0,0:00:32.78,0:00:34.44,Default,,0,0,0,,Không còn thời gian nữa rồi!
Dialogue: 0,0:00:34.44,0:00:36.57,Default,,0,0,0,,{\an8}[Cục thiết kế bước đầu]
Dialogue: 0,0:00:34.44,0:00:36.57,Default,,0,0,0,,Trang bị lương thực nhẹ khẩn cấp
Dialogue: 0,0:00:36.57,0:00:38.37,Default,,0,0,0,,là điều cơ bản nhất.
Dialogue: 0,0:00:38.37,0:00:39.77,Default,,0,0,0,,Cố gắng tăng ngân sách.
Dialogue: 0,0:00:39.77,0:00:42.27,Default,,0,0,0,,Tôi chịu hết trách nhiệm biết chưa hả?
Dialogue: 0,0:00:42.27,0:00:43.20,Default,,0,0,0,,Vâng!
Dialogue: 0,0:00:44.28,0:00:48.78,Default,,0,0,0,,[Để chịu tải N44\Ncó kích thước lớn hơn chú chó,]
Dialogue: 0,0:00:48.78,0:00:52.28,Default,,0,0,0,,[khoang chứa của\N tàu vũ trụ hẹp hơn dự kiến.]
Dialogue: 0,0:00:52.28,0:00:54.32,Default,,0,0,0,,[Việc cải tạo liên tục\Nkhiến thời gian bị trễ,]
Dialogue: 0,0:00:54.32,0:00:58.40,Default,,0,0,0,,[máy móc vận chuyển rất có khả năng\Nkhông thể vận hành bình thường.]
Dialogue: 0,0:01:02.86,0:01:05.11,Default,,0,0,0,,Mình chưa thể gục ngã lúc này được…
Dialogue: 0,0:01:09.03,0:01:11.40,Default,,0,0,0,,♫Trong thế giới tối đen băng giá♫
Dialogue: 0,0:01:11.40,0:01:14.11,Default,,0,0,0,,♫Ánh trăng vỡ vụn♫
Dialogue: 0,0:01:14.11,0:01:16.57,Default,,0,0,0,,♫Tìm đến với chúng tôi♫
Dialogue: 0,0:01:16.57,0:01:19.27,Default,,0,0,0,,♫Bạn có biết♫
Dialogue: 0,0:01:19.27,0:01:22.86,Default,,0,0,0,,♫Tung tích về Hành Tinh Xanh không?♫
Dialogue: 0,0:01:22.86,0:01:25.82,Default,,0,0,0,,[Mặt Trăng, Raika Và Công Chúa Ma Cà Rồng]
Dialogue: 0,0:01:30.86,0:01:36.78,Default,,0,0,0,,♫Không một ai có thể nhìn thấy♫
Dialogue: 0,0:01:37.61,0:01:41.15,Default,,0,0,0,,♫Dải ngân hà đỏ thẫm♫
Dialogue: 0,0:01:41.15,0:01:44.52,Default,,0,0,0,,♫Vòng xoáy ngày càng lớn♫
Dialogue: 0,0:01:44.52,0:01:47.99,Default,,0,0,0,,♫Trong cơ thể này♫
Dialogue: 0,0:01:47.99,0:01:51.44,Default,,0,0,0,,♫Nuốt chửng cả cõi mộng♫
Dialogue: 0,0:01:51.44,0:01:58.32,Default,,0,0,0,,♫Lần đầu tiên cùng bạn♫
Dialogue: 0,0:01:58.32,0:02:01.65,Default,,0,0,0,,♫Ngước nhìn bầu trời♫
Dialogue: 0,0:02:01.65,0:02:05.69,Default,,0,0,0,,♫Hãy giải phóng về hướng ánh sáng♫
Dialogue: 0,0:02:06.86,0:02:09.20,Default,,0,0,0,,♫Một ngày nào đó đôi bàn tay này♫
Dialogue: 0,0:02:09.20,0:02:11.99,Default,,0,0,0,,♫Có thể chạm tới vũ trụ xa xôi♫
Dialogue: 0,0:02:11.99,0:02:14.36,Default,,0,0,0,,♫Sẽ gây chấn động cả thế giới♫
Dialogue: 0,0:02:14.36,0:02:17.15,Default,,0,0,0,,♫Có thể truyền đạt mọi điều ước nguyện♫
Dialogue: 0,0:02:17.15,0:02:19.53,Default,,0,0,0,,♫Trên mặt biển vào sớm bình minh♫
Dialogue: 0,0:02:19.53,0:02:22.28,Default,,0,0,0,,♫Phản chiếu ánh trăng sáng lung linh♫
Dialogue: 0,0:02:22.28,0:02:24.70,Default,,0,0,0,,♫Điều khác biệt so với những người khác♫
Dialogue: 0,0:02:24.70,0:02:27.45,Default,,0,0,0,,♫Là tôi của hiện tại♫
Dialogue: 0,0:02:27.45,0:02:32.57,Default,,0,0,0,,♫Sớm đã vượt qua tất cả♫
Dialogue: 0,0:02:35.94,0:02:37.44,Default,,0,0,0,,[Lời Thề Bên Hồ]
Dialogue: 0,0:02:41.95,0:02:43.98,Default,,0,0,0,,[Trung tâm huấn luyện]
Dialogue: 0,0:02:43.98,0:02:45.49,Default,,0,0,0,,[5:15 chiều, ngày 15 tháng 11]
Dialogue: 0,0:02:45.49,0:02:47.24,Default,,0,0,0,,{\an8}[Phòng học, Trung tâm huấn luyện]
Dialogue: 0,0:02:45.49,0:02:47.24,Default,,0,0,0,,Đại khái chính là như vậy.
Dialogue: 0,0:02:47.24,0:02:51.20,Default,,0,0,0,,Tàu vũ trụ sẽ mất khoảng một tiếng 50 phút\Nđể quay quanh Trái Đất.
Dialogue: 0,0:02:51.20,0:02:54.82,Default,,0,0,0,,Sau đó lại tiến vào tầng khí quyển\Nrồi trở lại đồng bằng Parma.
Dialogue: 0,0:02:55.56,0:02:57.19,Default,,0,0,0,,Như tôi đã nói trước đó,
Dialogue: 0,0:02:57.19,0:02:59.49,Default,,0,0,0,,giữa đường cô sẽ bị bắn ra khỏi tàu vũ trụ,
Dialogue: 0,0:02:59.49,0:03:01.44,Default,,0,0,0,,sử dụng dù để hạ cánh.
Dialogue: 0,0:03:02.23,0:03:05.15,Default,,0,0,0,,Chúng ta vẫn chưa làm huấn luyện\Nhạ cánh một mình.
Dialogue: 0,0:03:05.15,0:03:08.11,Default,,0,0,0,,Vì vậy trong ba tuần này bắt buộc\Nphải hoàn thành việc huấn luyện.
Dialogue: 0,0:03:08.11,0:03:09.57,Default,,0,0,0,,Tôi biết rồi.
Dialogue: 0,0:03:09.57,0:03:11.73,Default,,0,0,0,,Được rồi, bắt đầu tập luyện thôi.
Dialogue: 0,0:03:11.73,0:03:13.91,Default,,0,0,0,,Sau đó phải huấn luyện với\Nmáy gia tốc ly tâm phải không?
Dialogue: 0,0:03:18.19,0:03:22.28,Default,,0,0,0,,{\an8}[6:05 tối, ngày 18 tháng 11]
Dialogue: 0,0:03:18.19,0:03:22.28,Default,,0,0,0,,[Hôm nay, trang phục phi hành gia\N được gửi đến.]
Dialogue: 0,0:03:26.07,0:03:29.36,Default,,0,0,0,,Thứ này ngay cả học viên\Ncũng chưa được mặc đó.
Dialogue: 0,0:03:30.70,0:03:32.69,Default,,0,0,0,,Tôi là người đầu tiên được mặc.
Dialogue: 0,0:03:33.32,0:03:37.20,Default,,0,0,0,,Trang bị này\Nvừa có độ bền vừa có tính bảo mật.
Dialogue: 0,0:03:37.20,0:03:42.11,Default,,0,0,0,,Màu cam sáng giúp dễ tìm ra cô\Nngay cả khi hạ cánh xuống tuyết.
Dialogue: 0,0:03:42.11,0:03:45.70,Default,,0,0,0,,Nóng quá… nặng quá…
Dialogue: 0,0:03:45.70,0:03:48.90,Default,,0,0,0,,Lúc quay về cô phải\Nmặc bộ đồ này để nhảy dù.
Dialogue: 0,0:03:48.90,0:03:50.45,Default,,0,0,0,,Chuẩn bị tinh thần đi nhé.
Dialogue: 0,0:04:00.12,0:04:01.82,Default,,0,0,0,,Mau thay quần áo đi,\Nnếu không sẽ cảm lạnh đấy.
Dialogue: 0,0:04:07.44,0:04:09.45,Default,,0,0,0,,Anh đừng cứ nhìn chằm chằm thế chứ!
Dialogue: 0,0:04:09.45,0:04:10.77,Default,,0,0,0,,Tôi có nhìn đâu.
Dialogue: 0,0:04:10.77,0:04:14.24,Default,,0,0,0,,Anh đã phụ trách chăm sóc tôi\Nthì ít ra phải giúp tôi chuẩn bị quần áo chứ.
Dialogue: 0,0:04:18.03,0:04:20.44,Default,,0,0,0,,[8:08 tối]
Dialogue: 0,0:04:20.44,0:04:22.98,Default,,0,0,0,,[Trước nhà vệ sinh ở Trung tâm huấn luyện]
Dialogue: 0,0:04:29.53,0:04:32.73,Default,,0,0,0,,Nghe nói ma cà rồng\Nđã thử trang phục phi hành gia.
Dialogue: 0,0:04:32.73,0:04:35.48,Default,,0,0,0,,Phải, cực kỳ không hợp với cô ấy.
Dialogue: 0,0:04:35.48,0:04:37.95,Default,,0,0,0,,Bị một ma cà rồng thí nghiệm qua mặt,
Dialogue: 0,0:04:37.95,0:04:40.02,Default,,0,0,0,,cậu không cảm thấy không cam lòng sao?
Dialogue: 0,0:04:40.02,0:04:42.90,Default,,0,0,0,,Cậu được chỉ định để trợ giúp cô ta đấy.
Dialogue: 0,0:04:43.86,0:04:46.23,Default,,0,0,0,,Tôi chỉ hoàn thành nhiệm vụ của mình thôi.
Dialogue: 0,0:04:46.23,0:04:47.73,Default,,0,0,0,,Nhiệm vụ sao?
Dialogue: 0,0:04:48.73,0:04:50.40,Default,,0,0,0,,Thôi bỏ đi.
Dialogue: 0,0:04:50.40,0:04:54.82,Default,,0,0,0,,Dù sao thì ma cà rồng sẽ bị vứt bỏ\Nsau khi hoàn thành nhiệm vụ.
Dialogue: 0,0:04:54.82,0:04:56.36,Default,,0,0,0,,Thật đáng thương mà.
Dialogue: 0,0:04:56.36,0:04:58.40,Default,,0,0,0,,Cố gắng lâu như vậy\Nmà cuối cùng lại bị giết chết.
Dialogue: 0,0:04:58.40,0:05:00.45,Default,,0,0,0,,Đừng nói khó nghe thế.
Dialogue: 0,0:05:00.45,0:05:02.95,Default,,0,0,0,,Cô ta nhìn có vẻ ngoan ngoãn lắm.
Dialogue: 0,0:05:02.95,0:05:05.53,Default,,0,0,0,,Nhưng không chừng lại là gián điệp\Ncủa các Vương quốc Arnak đó.
Dialogue: 0,0:05:05.53,0:05:07.37,Default,,0,0,0,,Irina không phải loại người đó đâu.
Dialogue: 0,0:05:07.37,0:05:11.32,Default,,0,0,0,,Người ư? Cậu cho rằng vật thí nghiệm\Nlà con người như chúng ta sao?
Dialogue: 0,0:05:11.32,0:05:14.19,Default,,0,0,0,,Phân biệt cho rõ, đó là đồ vật.
Dialogue: 0,0:05:20.03,0:05:21.45,Default,,0,0,0,,Irina.
Dialogue: 0,0:05:28.24,0:05:30.49,Default,,0,0,0,,Cô có điều gì muốn nói với tôi sao?
Dialogue: 0,0:05:30.49,0:05:32.94,Default,,0,0,0,,Nói trực tiếp với tôi đây này.
Dialogue: 0,0:05:32.94,0:05:36.61,Default,,0,0,0,,Cho dù cô bay thành công,\Ntôi cũng không công nhận cô đâu.
Dialogue: 0,0:05:36.61,0:05:39.27,Default,,0,0,0,,Tôi không cần được con người công nhận.
Dialogue: 0,0:05:39.27,0:05:41.73,Default,,0,0,0,,Ma cà rồng không có tư cách nói tôi.
Dialogue: 0,0:05:42.44,0:05:44.86,Default,,0,0,0,,Hai người bình tĩnh chút đi.
Dialogue: 0,0:05:45.86,0:05:48.86,Default,,0,0,0,,Cô tự chú ý đi, đừng có mà chết đấy.
Dialogue: 0,0:05:48.86,0:05:51.48,Default,,0,0,0,,Lev cũng cẩn thận kẻo bị hút máu.
Dialogue: 0,0:05:57.62,0:05:59.23,Default,,0,0,0,,Cô nghe thấy hết rồi à?
Dialogue: 0,0:06:00.57,0:06:02.32,Default,,0,0,0,,Nghe được một nửa.
Dialogue: 0,0:06:02.32,0:06:03.70,Default,,0,0,0,,Đừng để ý.
Dialogue: 0,0:06:03.70,0:06:05.52,Default,,0,0,0,,Roza vẫn luôn rất mạnh mẽ.
Dialogue: 0,0:06:05.52,0:06:07.53,Default,,0,0,0,,Đối với ai cũng như vậy cả.
Dialogue: 0,0:06:09.90,0:06:12.40,Default,,0,0,0,,[10:57 tối]
Dialogue: 0,0:06:12.40,0:06:14.62,Default,,0,0,0,,[Nhà ăn ký túc xá chung]
Dialogue: 0,0:06:19.61,0:06:21.94,Default,,0,0,0,,Anh thấy tôi thế nào?
Dialogue: 0,0:06:24.19,0:06:27.28,Default,,0,0,0,,Đừng hiểu lầm, tôi không có ý gì cả.
Dialogue: 0,0:06:27.28,0:06:32.11,Default,,0,0,0,,Tôi bị nghi ngờ là gián điệp\Nmà anh lại chẳng hỏi gì cả.
Dialogue: 0,0:06:32.11,0:06:33.78,Default,,0,0,0,,Nên tôi rất tò mò.
Dialogue: 0,0:06:34.69,0:06:37.73,Default,,0,0,0,,Không, tôi không nghĩ cô là gián điệp.
Dialogue: 0,0:06:37.73,0:06:42.20,Default,,0,0,0,,Chỉ là thấy cô bị ép buộc đến đây\Nmà vẫn chăm chỉ tập luyện như vậy.
Dialogue: 0,0:06:42.20,0:06:43.94,Default,,0,0,0,,Ép buộc đến đây?
Dialogue: 0,0:06:43.94,0:06:45.78,Default,,0,0,0,,Không phải sao?
Dialogue: 0,0:06:45.78,0:06:47.53,Default,,0,0,0,,Anh hiểu nhầm rồi.
Dialogue: 0,0:06:47.53,0:06:52.03,Default,,0,0,0,,Khi người của nước Cộng hòa đến thôn làng\Ntôi đã tự tiến cử mình.
Dialogue: 0,0:06:52.03,0:06:53.44,Default,,0,0,0,,Tự tiến cử ư?
Dialogue: 0,0:06:53.44,0:06:56.19,Default,,0,0,0,,Đúng vậy, tuy rằng có cả những người khác,
Dialogue: 0,0:06:56.19,0:06:58.90,Default,,0,0,0,,nhưng tôi tự nguyện\Ntiếp nhận huấn luyện.
Dialogue: 0,0:06:58.90,0:07:00.57,Default,,0,0,0,,Tự nguyện…
Dialogue: 0,0:07:00.57,0:07:03.03,Default,,0,0,0,,Thì ra là vậy, tôi đã hiểu lầm rồi.
Dialogue: 0,0:07:03.03,0:07:06.24,Default,,0,0,0,,Tôi còn tưởng cô bị bắt cóc,\Nngười thân bị bắt làm con tin…
Dialogue: 0,0:07:06.24,0:07:08.19,Default,,0,0,0,,Đừng tự ý bịa chuyện giúp tôi.
Dialogue: 0,0:07:08.19,0:07:11.49,Default,,0,0,0,,Xin lỗi nhé.
Dialogue: 0,0:07:11.49,0:07:12.98,Default,,0,0,0,,Nhưng mà sao cô lại tự nguyện…
Dialogue: 0,0:07:12.98,0:07:15.69,Default,,0,0,0,,Đừng quên, phải coi tôi là đồ vật.
Dialogue: 0,0:07:22.19,0:07:24.45,Default,,0,0,0,,[Ngày nghỉ cùng ma cà rồng]
Dialogue: 0,0:07:25.45,0:07:26.15,Default,,0,0,0,,{\an8}[9:06 sáng, ngày 23 tháng 11]
Dialogue: 0,0:07:26.15,0:07:29.36,Default,,0,0,0,,[Thành phố khai phá vũ trụ “Laika 44"]
Dialogue: 0,0:07:26.15,0:07:29.36,Default,,0,0,0,,[Khối khí lạnh Bắc Cực mang tên Malos]
Dialogue: 0,0:07:29.36,0:07:31.73,Default,,0,0,0,,[đang thổi tới hơi lạnh của băng.]
Dialogue: 0,0:07:31.73,0:07:33.66,Default,,0,0,0,,[Laika 44]
Dialogue: 0,0:07:33.66,0:07:36.28,Default,,0,0,0,,[đang đón mùa đông dài và khắc nghiệt.]
Dialogue: 0,0:07:33.66,0:07:36.28,Default,,0,0,0,,{\an8}[9:14 sáng]
Dialogue: 0,0:07:36.28,0:07:38.44,Default,,0,0,0,,[Hồ Berga]
Dialogue: 0,0:07:41.32,0:07:43.69,Default,,0,0,0,,{\an8}[Phòng riêng của Irina]
Dialogue: 0,0:07:41.32,0:07:43.69,Default,,0,0,0,,Tuần tới sẽ bắt đầu huấn luyện một mình
Dialogue: 0,0:07:43.69,0:07:45.73,Default,,0,0,0,,trong phòng áp suất thấp không âm thanh.
Dialogue: 0,0:07:45.73,0:07:48.65,Default,,0,0,0,,Gì cơ? Huấn luyện ở đâu?
Dialogue: 0,0:07:48.65,0:07:50.82,Default,,0,0,0,,Phòng áp suất thấp không âm thanh.
Dialogue: 0,0:07:50.82,0:07:54.07,Default,,0,0,0,,Nồng độ oxy trong không khí khá cao,
Dialogue: 0,0:07:54.07,0:07:57.20,Default,,0,0,0,,không gian kín với áp suất khí quyển thấp.
Dialogue: 0,0:07:57.20,0:07:59.90,Default,,0,0,0,,Ở đó sẽ không thể nghe thấy\Nâm thanh bên ngoài.
Dialogue: 0,0:07:59.90,0:08:02.11,Default,,0,0,0,,Âm thanh trong phòng\Ncũng sẽ bị hấp thụ bởi bức tường.
Dialogue: 0,0:08:02.11,0:08:04.24,Default,,0,0,0,,Không khí hầu như không chuyển động.
Dialogue: 0,0:08:04.24,0:08:05.90,Default,,0,0,0,,Trên người liên kết với máy cảm biến.
Dialogue: 0,0:08:05.90,0:08:07.91,Default,,0,0,0,,Sẽ phải trải qua một mình trong vài ngày.
Dialogue: 0,0:08:09.20,0:08:11.44,Default,,0,0,0,,Sao phải làm bài huấn luyện như vậy chứ?
Dialogue: 0,0:08:11.44,0:08:13.69,Default,,0,0,0,,Buồng lái của phi hành gia
Dialogue: 0,0:08:13.69,0:08:16.65,Default,,0,0,0,,là một không gian\Ncách biệt với thế giới bên ngoài.
Dialogue: 0,0:08:16.65,0:08:19.15,Default,,0,0,0,,Một trong những mục đích của bài này\Nlà làm quen với cô đơn.
Dialogue: 0,0:08:19.15,0:08:21.49,Default,,0,0,0,,Thứ hai là khi xảy ra sự cố
Dialogue: 0,0:08:21.49,0:08:24.32,Default,,0,0,0,,sẽ phải lơ lửng trong vũ trụ\Nlâu nhất khoảng một tuần.
Dialogue: 0,0:08:24.32,0:08:25.90,Default,,0,0,0,,Vậy nên mới cần huấn luyện.
Dialogue: 0,0:08:26.90,0:08:30.07,Default,,0,0,0,,Vậy… tôi sẽ bị nhốt bao lâu?
Dialogue: 0,0:08:30.07,0:08:32.40,Default,,0,0,0,,Hơn một ngày, không đến mười ngày,
Dialogue: 0,0:08:32.40,0:08:34.48,Default,,0,0,0,,cho đến khi cánh cửa mở ra.
Dialogue: 0,0:08:36.82,0:08:40.02,Default,,0,0,0,,Tôi không giỏi huấn luyện kiểu này.
Dialogue: 0,0:08:40.02,0:08:41.52,Default,,0,0,0,,Trước khi bị nhốt,
Dialogue: 0,0:08:41.52,0:08:43.40,Default,,0,0,0,,tôi đề nghị đi thay đổi tâm trạng.
Dialogue: 0,0:08:51.15,0:08:52.78,Default,,0,0,0,,Nếu không muốn thì cũng không sao đâu.
Dialogue: 0,0:08:54.49,0:08:57.69,Default,,0,0,0,,Nếu là anh,\Nanh có đi thay đổi tâm trạng không?
Dialogue: 0,0:08:57.69,0:08:58.94,Default,,0,0,0,,Tôi sao?
Dialogue: 0,0:08:58.94,0:09:01.57,Default,,0,0,0,,Tôi sẽ đến… quán bar nhạc jazz.
Dialogue: 0,0:09:01.57,0:09:04.07,Default,,0,0,0,,Quán bar? Nơi để uống rượu à?
Dialogue: 0,0:09:04.07,0:09:06.69,Default,,0,0,0,,Cô không thể uống rượu sao?
Dialogue: 0,0:09:06.69,0:09:10.20,Default,,0,0,0,,Ở làng tôi\Nphải đủ 20 tuổi mới được uống rượu.
Dialogue: 0,0:09:11.03,0:09:13.44,Default,,0,0,0,,Bây giờ tôi mới 17 tuổi.
Dialogue: 0,0:09:14.48,0:09:15.86,Default,,0,0,0,,Mười bảy tuổi?
Dialogue: 0,0:09:15.86,0:09:18.90,Default,,0,0,0,,{\an8}[Trung úy Không quân Irina Ruminescu]
Dialogue: 0,0:09:15.86,0:09:18.90,Default,,0,0,0,,Trên thẻ căn cước ghi 21 tuổi mà?
Dialogue: 0,0:09:18.90,0:09:22.15,Default,,0,0,0,,Vì bọn họ nói rằng\Nthành niên thì thuận tiện hơn.
Dialogue: 0,0:09:23.37,0:09:26.23,Default,,0,0,0,,Thảo nào tôi trông cô có vẻ nhỏ tuổi.
Dialogue: 0,0:09:27.32,0:09:30.44,Default,,0,0,0,,Tuân thủ quy tắc\Nlà chuẩn mực của quân nhân.
Dialogue: 0,0:09:30.44,0:09:33.15,Default,,0,0,0,,Nhưng như vậy cũng tốt.
Dialogue: 0,0:09:34.15,0:09:36.73,Default,,0,0,0,,Tôi nói là tới quán bar\N nhạc jazz cũng được.
Dialogue: 0,0:09:36.73,0:09:38.57,Default,,0,0,0,,Cô thích nhạc jazz sao?
Dialogue: 0,0:09:38.57,0:09:40.32,Default,,0,0,0,,Dù sao cô không thể uống rượu…
Dialogue: 0,0:09:40.32,0:09:41.74,Default,,0,0,0,,Không phải mà!
Dialogue: 0,0:09:41.74,0:09:43.99,Default,,0,0,0,,À, thì là…
Dialogue: 0,0:09:45.07,0:09:47.03,Default,,0,0,0,,Hóa ra cô không biết à.
Dialogue: 0,0:09:47.03,0:09:49.66,Default,,0,0,0,,Dù sao thì ở quán bar có rất nhiều đồ uống,
Dialogue: 0,0:09:49.66,0:09:52.24,Default,,0,0,0,,cũng có thể thưởng thức âm nhạc.
Dialogue: 0,0:09:52.24,0:09:53.61,Default,,0,0,0,,Nhưng tại sao…
Dialogue: 0,0:09:53.61,0:09:55.95,Default,,0,0,0,,Tóm lại cứ dẫn tôi đi là được rồi.
Dialogue: 0,0:10:06.11,0:10:08.99,Default,,0,0,0,,[7:05 tối, ngày 25 tháng 11]
Dialogue: 0,0:10:13.49,0:10:15.99,Default,,0,0,0,,Lần đầu tiên tôi thấy\N cô mặc thường phục đó.
Dialogue: 0,0:10:15.99,0:10:17.45,Default,,0,0,0,,Cứ có gì đó sai sai.
Dialogue: 0,0:10:18.07,0:10:20.36,Default,,0,0,0,,Tôi cũng vậy…
Dialogue: 0,0:10:21.37,0:10:23.49,Default,,0,0,0,,- Lạnh quá nhỉ.\N- Bình thường.
Dialogue: 0,0:10:29.20,0:10:31.78,Default,,0,0,0,,[8:16 tối]
Dialogue: 0,0:10:31.78,0:10:34.15,Default,,0,0,0,,[Jazzbar "Red Star"]
Dialogue: 0,0:10:44.28,0:10:45.52,Default,,0,0,0,,Đó là gì vậy?
Dialogue: 0,0:10:48.65,0:10:50.37,Default,,0,0,0,,Đó là máy quay đĩa.
Dialogue: 0,0:10:50.37,0:10:53.78,Default,,0,0,0,,Máy chuyển động đĩa hát và phát ra âm nhạc.
Dialogue: 0,0:10:53.78,0:10:56.28,Default,,0,0,0,,Tôi chưa bao giờ nghe bản nhạc này.
Dialogue: 0,0:10:56.28,0:10:58.94,Default,,0,0,0,,Nhạc Jazz là văn hóa\Ncủa các Vương quốc Arnak,
Dialogue: 0,0:10:58.94,0:11:00.99,Default,,0,0,0,,từ trước đến nay luôn bị cấm.
Dialogue: 0,0:11:00.99,0:11:03.77,Default,,0,0,0,,Gần đây cuối cùng cũng được gỡ bỏ.
Dialogue: 0,0:11:13.95,0:11:16.61,Default,,0,0,0,,Bản nhạc này tên gì vậy?
Dialogue: 0,0:11:16.61,0:11:18.20,Default,,0,0,0,,"Em Thân Yêu"
Dialogue: 0,0:11:18.20,0:11:22.40,Default,,0,0,0,,Dù nghe không hiểu\Nnhưng tôi thích bản nhạc này.
Dialogue: 0,0:11:25.61,0:11:27.86,Default,,0,0,0,,Gọi đồ uống thôi nào.
Dialogue: 0,0:11:30.44,0:11:33.40,Default,,0,0,0,,Không ngờ cô lại gọi nước chanh có ga.
Dialogue: 0,0:11:33.40,0:11:35.73,Default,,0,0,0,,Cơ hội hiếm có nên uống thôi.
Dialogue: 0,0:11:35.73,0:11:38.15,Default,,0,0,0,,Quả nhiên cô ấy rất thích.
Dialogue: 0,0:11:38.15,0:11:39.61,Default,,0,0,0,,Gì vậy?
Dialogue: 0,0:11:39.61,0:11:41.24,Default,,0,0,0,,Không, không có gì.
Dialogue: 0,0:11:46.57,0:11:48.62,Default,,0,0,0,,Ngon đến nỗi khiến tôi không cam lòng.
Dialogue: 0,0:12:02.65,0:12:05.07,Default,,0,0,0,,Sao thế, hiếm lắm tôi\Nmới nói một câu khen mà.
Dialogue: 0,0:12:05.07,0:12:06.23,Default,,0,0,0,,Không…
Dialogue: 0,0:12:10.66,0:12:13.24,Default,,0,0,0,,Ly đó là nước gì vậy?
Dialogue: 0,0:12:13.24,0:12:14.87,Default,,0,0,0,,Màu đỏ đẹp quá.
Dialogue: 0,0:12:14.87,0:12:19.49,Default,,0,0,0,,Đó là một loại rượu tự làm bằng cách\Nngâm thù du trong rượu chưng cất ba tuần.
Dialogue: 0,0:12:20.36,0:12:22.15,Default,,0,0,0,,Cô muốn uống thử không?
Dialogue: 0,0:12:22.15,0:12:25.49,Default,,0,0,0,,Không cần, tôi đã nói tôi mới 17 tuổi mà.
Dialogue: 0,0:12:25.49,0:12:29.28,Default,,0,0,0,,Ở nước Cộng hòa\Nđủ 16 tuổi là có thể uống rượu rồi.
Dialogue: 0,0:12:29.28,0:12:32.40,Default,,0,0,0,,Biết đâu sẽ có cảm giác đặc biệt\Nnhư nước có ga đấy.
Dialogue: 0,0:12:34.70,0:12:36.48,Default,,0,0,0,,Vậy thì thử một ngụm xem.
Dialogue: 0,0:12:40.95,0:12:43.74,Default,,0,0,0,,Lưỡi tôi bị đốt cháy rồi!
Dialogue: 0,0:12:45.44,0:12:48.40,Default,,0,0,0,,Còn quá sớm đối với tôi...
Dialogue: 0,0:12:59.53,0:13:01.27,Default,,0,0,0,,Lev này…
Dialogue: 0,0:13:01.27,0:13:04.74,Default,,0,0,0,,[Lev? Lần đầu tiên cô ấy gọi tên mình.]
Dialogue: 0,0:13:04.74,0:13:06.16,Default,,0,0,0,,Anh có đang nghe không thế?
Dialogue: 0,0:13:10.86,0:13:13.03,Default,,0,0,0,,Xin lỗi! Không sao chứ?
Dialogue: 0,0:13:13.65,0:13:15.03,Default,,0,0,0,,Tôi không sao…
Dialogue: 0,0:13:20.45,0:13:21.74,Default,,0,0,0,,Lev này,
Dialogue: 0,0:13:21.74,0:13:24.99,Default,,0,0,0,,mấy tuổi thì anh bắt đầu\Nmuốn ra ngoài vũ trụ?
Dialogue: 0,0:13:26.40,0:13:27.77,Default,,0,0,0,,Tôi muốn biết.
Dialogue: 0,0:13:30.53,0:13:32.03,Default,,0,0,0,,Năm tuổi.
Dialogue: 0,0:13:32.03,0:13:33.49,Default,,0,0,0,,Năm?
Dialogue: 0,0:13:33.49,0:13:35.82,Default,,0,0,0,,Đúng vậy, lúc năm tuổi,
Dialogue: 0,0:13:35.82,0:13:38.27,Default,,0,0,0,,nhìn thấy máy bay chiến đấu\Nđang bay về phía trăng tròn.
Dialogue: 0,0:13:38.27,0:13:41.19,Default,,0,0,0,,Lúc đó tôi đã nghĩ ngồi trên chiếc máy bay đó\Nlà có thể đến Mặt Trăng.
Dialogue: 0,0:13:41.19,0:13:44.28,Default,,0,0,0,,Bây giờ nghĩ lại thật buồn cười,\Nnhưng lúc đó tôi đã rất nghiêm túc.
Dialogue: 0,0:13:45.70,0:13:47.69,Default,,0,0,0,,Tôi muốn tới Mặt Trăng.
Dialogue: 0,0:13:47.69,0:13:50.99,Default,,0,0,0,,Phi hành gia của các Vương quốc Arnak\Ncũng muốn vậy nhỉ.
Dialogue: 0,0:13:51.99,0:13:56.24,Default,,0,0,0,,Nhưng mà so với vũ trụ xinh đẹp,
Dialogue: 0,0:13:56.24,0:13:58.78,Default,,0,0,0,,Trái Đất lại thật bẩn thỉu và xấu xí.
Dialogue: 0,0:13:58.78,0:14:01.78,Default,,0,0,0,,Tôi nghĩ chúng ta\Nkhông nên mang chiến tranh ra vũ trụ.
Dialogue: 0,0:14:04.86,0:14:06.40,Default,,0,0,0,,Cẩn thận kẻo bị bắt đó.
Dialogue: 0,0:14:06.40,0:14:09.07,Default,,0,0,0,,Natalia, sao chị lại ở đây?
Dialogue: 0,0:14:09.74,0:14:13.90,Default,,0,0,0,,Chẳng lẽ ngày nào\Nchị cũng phải ở nhà bếp nấu ăn sao?
Dialogue: 0,0:14:13.90,0:14:15.48,Default,,0,0,0,,Không ạ, em xin lỗi.
Dialogue: 0,0:14:15.48,0:14:16.99,Default,,0,0,0,,Em chỉ hơi ngạc nhiên thôi ạ.
Dialogue: 0,0:14:19.48,0:14:24.24,Default,,0,0,0,,Chị khuyên em ít bàn về\Ncác Vương quốc Arnak thôi.
Dialogue: 0,0:14:24.24,0:14:26.45,Default,,0,0,0,,Nếu bị "người giao hàng" nghe thấy\Nlà rắc rối đó.
Dialogue: 0,0:14:27.78,0:14:28.99,Default,,0,0,0,,Em xin lỗi…
Dialogue: 0,0:14:30.11,0:14:32.03,Default,,0,0,0,,Irina cũng vất vả rồi.
Dialogue: 0,0:14:32.03,0:14:34.78,Default,,0,0,0,,Ngày nào cũng phải ở cùng "Lev tuyết tan".
Dialogue: 0,0:14:34.78,0:14:36.32,Default,,0,0,0,,"Lev tuyết tan"?
Dialogue: 0,0:14:36.32,0:14:38.94,Default,,0,0,0,,Chị Natalia,\Nđừng nhắc đến biệt danh này nữa mà.
Dialogue: 0,0:14:38.94,0:14:41.90,Default,,0,0,0,,Cứ nói về bầu trời và vũ trụ\Ncậu ấy liền trở nên tràn đầy nhiệt huyết ngay.
Dialogue: 0,0:14:41.90,0:14:44.95,Default,,0,0,0,,"Nhiệt" đến nỗi\Ncó thể làm tan tuyết xung quanh đó.
Dialogue: 0,0:14:46.77,0:14:48.32,Default,,0,0,0,,Sao thế?
Dialogue: 0,0:14:49.37,0:14:52.82,Default,,0,0,0,,Xin lỗi nhé, quấy rầy\N ngày nghỉ hiếm có của hai người rồi.
Dialogue: 0,0:14:52.82,0:14:54.73,Default,,0,0,0,,- Không sao…\N- Chuyện đó!
Dialogue: 0,0:14:55.91,0:14:58.11,Default,,0,0,0,,Tạm biệt hai em nha!
Dialogue: 0,0:15:06.24,0:15:07.82,Default,,0,0,0,,Tiếp theo cô muốn làm gì?
Dialogue: 0,0:15:07.82,0:15:09.65,Default,,0,0,0,,Còn có thể làm gì chứ?
Dialogue: 0,0:15:09.65,0:15:12.28,Default,,0,0,0,,Xem phim này, chơi bi-a này.
Dialogue: 0,0:15:12.28,0:15:13.99,Default,,0,0,0,,Hoặc trượt băng gì đó…
Dialogue: 0,0:15:23.86,0:15:25.90,Default,,0,0,0,,Hoan nghênh đồng chí Lev!
Dialogue: 0,0:15:25.90,0:15:27.94,Default,,0,0,0,,Hôm nay cháu muốn xem gì vậy?
Dialogue: 0,0:15:27.94,0:15:29.91,Default,,0,0,0,,Cháu muốn xem giày trượt băng.
Dialogue: 0,0:15:33.82,0:15:37.57,Default,,0,0,0,,Thì ra còn có quân nhân\Nxinh đẹp hơn Roza cơ đấy.
Dialogue: 0,0:15:37.57,0:15:40.45,Default,,0,0,0,,Màu mắt chị đặc biệt quá, đẹp thật đấy!
Dialogue: 0,0:15:43.37,0:15:44.62,Default,,0,0,0,,Trung úy Ruminescu,
Dialogue: 0,0:15:44.62,0:15:46.61,Default,,0,0,0,,mau chọn dụng cụ luyện tập rồi đi thôi.
Dialogue: 0,0:15:49.70,0:15:51.16,Default,,0,0,0,,Trung úy?
Dialogue: 0,0:16:00.82,0:16:03.48,Default,,0,0,0,,[10:21 tối]
Dialogue: 0,0:16:03.48,0:16:06.40,Default,,0,0,0,,[Hồ Berga]
Dialogue: 0,0:16:08.69,0:16:10.40,Default,,0,0,0,,Bao cả sân ư?
Dialogue: 0,0:16:10.40,0:16:13.24,Default,,0,0,0,,Ai lại muốn trượt băng\Ntrong thời tiết lạnh như vậy chứ?
Dialogue: 0,0:16:14.65,0:16:16.07,Default,,0,0,0,,Không phải anh cũng vậy sao?
Dialogue: 0,0:16:16.07,0:16:17.77,Default,,0,0,0,,Tôi chỉ đến giám sát cô thôi.
Dialogue: 0,0:16:19.90,0:16:20.94,Default,,0,0,0,,Đợi đã nào!
Dialogue: 0,0:16:23.86,0:16:28.61,Default,,0,0,0,,♫Đôi mắt em đang tìm kiếm bầu trời♫
Dialogue: 0,0:16:29.32,0:16:35.74,Default,,0,0,0,,♫Một giấc mơ vô hạn vươn xa♫
Dialogue: 0,0:16:36.90,0:16:42.07,Default,,0,0,0,,♫Đôi mắt tôi khao khát màu xanh♫
Dialogue: 0,0:16:42.07,0:16:49.03,Default,,0,0,0,,♫Phía dưới là ngôi nhà bằng đá cẩm thạch♫
Dialogue: 0,0:16:49.94,0:16:54.53,Default,,0,0,0,,♫Tảng băng dưới chân tôi♫
Dialogue: 0,0:16:55.36,0:17:02.73,Default,,0,0,0,,♫Mỗi lần lướt qua\Nlấp đầy cuộc sống của tôi♫
Dialogue: 0,0:17:02.73,0:17:13.07,Default,,0,0,0,,♫Như những cánh chim nhẹ nhàng bay cao♫
Dialogue: 0,0:17:15.39,0:17:19.69,Default,,0,0,0,,♫Tôi có thể bay đi♫
Dialogue: 0,0:17:19.69,0:17:22.99,Default,,0,0,0,,♫Với đôi cánh gãy♫
Dialogue: 0,0:17:22.99,0:17:29.11,Default,,0,0,0,,♫Đến Mặt Trăng và quay trở lại♫
Dialogue: 0,0:17:29.11,0:17:43.73,Default,,0,0,0,,♫Nhưng cuộc sống giản đơn vẫn xa vời♫
Dialogue: 0,0:18:05.99,0:18:07.69,Default,,0,0,0,,Đã quá đi!
Dialogue: 0,0:18:13.03,0:18:16.41,Default,,0,0,0,,Thật khó tưởng tượng rằng\Nchúng ta có thể bay tới vũ trụ.
Dialogue: 0,0:18:16.41,0:18:19.23,Default,,0,0,0,,Nhưng tôi là dự bị, nên không thể đi được.
Dialogue: 0,0:18:20.73,0:18:22.70,Default,,0,0,0,,Sao anh lại là dự bị?
Dialogue: 0,0:18:25.32,0:18:27.86,Default,,0,0,0,,Tôi nhớ là\N thành tích của anh rất tốt cơ mà.
Dialogue: 0,0:18:29.77,0:18:32.48,Default,,0,0,0,,Vì tôi dùng bạo lực với trưởng quan.
Dialogue: 0,0:18:32.48,0:18:34.11,Default,,0,0,0,,Bạo lực?
Dialogue: 0,0:18:34.11,0:18:36.37,Default,,0,0,0,,Con trai của cán bộ Cục kỹ thuật phạm lỗi
Dialogue: 0,0:18:36.37,0:18:40.48,Default,,0,0,0,,nhưng lại đẩy cho nhân viên kỹ thuật\Nmới được bổ nhiệm gánh tội thay,
Dialogue: 0,0:18:40.48,0:18:41.98,Default,,0,0,0,,hại cậu ấy bị cách chức.
Dialogue: 0,0:18:41.98,0:18:44.16,Default,,0,0,0,,Người ta đã cúi đầu xin lỗi rồi.
Dialogue: 0,0:18:44.16,0:18:47.82,Default,,0,0,0,,Nhưng hắn còn lấy giày\Nđạp lên mặt người ta.
Dialogue: 0,0:18:47.82,0:18:50.98,Default,,0,0,0,,Tôi không nhịn được liền đẩy hắn ra.
Dialogue: 0,0:18:50.98,0:18:53.07,Default,,0,0,0,,Không hổ là "Lev tuyết tan".
Dialogue: 0,0:18:53.07,0:18:55.23,Default,,0,0,0,,Đừng gọi tôi như vậy.
Dialogue: 0,0:18:58.98,0:19:00.90,Default,,0,0,0,,Sao thế?
Dialogue: 0,0:19:00.90,0:19:04.86,Default,,0,0,0,,Vật thí nghiệm\Ncuối cùng sẽ bị vứt bỏ phải không?
Dialogue: 0,0:19:06.94,0:19:08.74,Default,,0,0,0,,Cô nghe thấy hết rồi sao?
Dialogue: 0,0:19:11.45,0:19:15.24,Default,,0,0,0,,Chúng tôi rốt cuộc là gì đối với con người?
Dialogue: 0,0:19:18.77,0:19:24.07,Default,,0,0,0,,Khi tôi ba tuổi,\Ncha mẹ bị cuốn vào chiến tranh,
Dialogue: 0,0:19:24.07,0:19:25.69,Default,,0,0,0,,cuối cùng bị thiêu chết.
Dialogue: 0,0:19:26.86,0:19:29.36,Default,,0,0,0,,Rất nhiều dân làng cũng bị sát hại.
Dialogue: 0,0:19:31.74,0:19:35.32,Default,,0,0,0,,Tên tôi có nghĩa là "hòa bình".
Dialogue: 0,0:19:36.70,0:19:39.11,Default,,0,0,0,,Nhưng tại sao…
Dialogue: 0,0:19:41.44,0:19:45.32,Default,,0,0,0,,Anh đã từng nghe\N"ma cà rồng là cư dân của Mặt Trăng" chưa?
Dialogue: 0,0:19:45.32,0:19:46.48,Default,,0,0,0,,Rồi.
Dialogue: 0,0:19:46.48,0:19:49.28,Default,,0,0,0,,Lúc nhỏ tôi luôn tin như vậy.
Dialogue: 0,0:19:49.28,0:19:51.52,Default,,0,0,0,,Ma cà rồng là cư dân của Mặt Trăng
Dialogue: 0,0:19:51.52,0:19:53.49,Default,,0,0,0,,nên chịu đủ sự giày vò trên hành tinh này.
Dialogue: 0,0:19:54.99,0:19:56.87,Default,,0,0,0,,Đá Mặt Trăng.
Dialogue: 0,0:19:57.78,0:20:00.45,Default,,0,0,0,,Đây là đá Mặt Trăng\Nđược truyền từ đời này sang đời khác.
Dialogue: 0,0:20:00.45,0:20:01.86,Default,,0,0,0,,Vịnh Cầu Vồng,
Dialogue: 0,0:20:01.86,0:20:03.37,Default,,0,0,0,,hồ Giấc Mơ,
Dialogue: 0,0:20:03.37,0:20:04.90,Default,,0,0,0,,đầm Ngủ Yên,
Dialogue: 0,0:20:04.90,0:20:06.57,Default,,0,0,0,,đại dương Gió Bão,
Dialogue: 0,0:20:06.57,0:20:08.03,Default,,0,0,0,,biển Hơi Nước,
Dialogue: 0,0:20:08.03,0:20:09.74,Default,,0,0,0,,đầm lầy Thối Rữa,
Dialogue: 0,0:20:09.74,0:20:11.37,Default,,0,0,0,,vịnh Sóng.
Dialogue: 0,0:20:15.27,0:20:18.11,Default,,0,0,0,,Tôi muốn đem viên đá Mặt Trăng này\Nlên Mặt Trăng.
Dialogue: 0,0:20:18.11,0:20:22.23,Default,,0,0,0,,Nhưng tôi không có đôi cánh\N có thể bay lên bầu trời.
Dialogue: 0,0:20:22.23,0:20:25.40,Default,,0,0,0,,Vào lúc này,\Nngười của nước Cộng hòa đã đến làng.
Dialogue: 0,0:20:26.36,0:20:28.82,Default,,0,0,0,,Cho dù là làm vật thí nghiệm cũng được,
Dialogue: 0,0:20:28.82,0:20:31.40,Default,,0,0,0,,hay phải dựa vào\Nsức mạnh của con người cũng được.
Dialogue: 0,0:20:31.40,0:20:33.24,Default,,0,0,0,,Tôi muốn ra ngoài vũ trụ.
Dialogue: 0,0:20:35.82,0:20:40.65,Default,,0,0,0,,[Thế nên cô mới nỗ lực huấn luyện gian khổ\Nmà không một câu ca thán.]
Dialogue: 0,0:20:41.94,0:20:45.20,Default,,0,0,0,,[Từ lúc đó cô đã…]
Dialogue: 0,0:20:50.36,0:20:52.78,Default,,0,0,0,,Tôi muốn tiến vào vũ trụ trước con người.
Dialogue: 0,0:20:54.03,0:20:55.53,Default,,0,0,0,,Chỉ cần có thể đạt được mục tiêu này
Dialogue: 0,0:20:55.53,0:20:57.56,Default,,0,0,0,,cho dù có bị vứt bỏ cũng chẳng sao cả.
Dialogue: 0,0:20:58.82,0:21:01.45,Default,,0,0,0,,Trước khi vũ trụ bị con người vấy bẩn,
Dialogue: 0,0:21:01.45,0:21:03.19,Default,,0,0,0,,tôi muốn đặt chân tới Mặt Trăng.
Dialogue: 0,0:21:03.74,0:21:07.15,Default,,0,0,0,,Vậy nên xin anh hãy đồng hành cùng tôi\Nthêm một thời gian nữa.
Dialogue: 0,0:21:08.19,0:21:09.48,Default,,0,0,0,,Không thành vấn đề.
Dialogue: 0,0:21:09.48,0:21:11.66,Default,,0,0,0,,Tôi nhất định sẽ đưa cô bay vào vũ trụ.
Dialogue: 0,0:21:12.48,0:21:14.90,Default,,0,0,0,,Cho dù có chuyện gì,\Ntôi vẫn sẽ đứng về phía cô.
Dialogue: 0,0:21:17.57,0:21:19.19,Default,,0,0,0,,Anh đúng là người kỳ quặc.
Dialogue: 0,0:21:20.95,0:21:23.36,Default,,0,0,0,,Nhưng vẫn may là anh đến giám sát tôi.
Dialogue: 0,0:21:24.70,0:21:26.20,Default,,0,0,0,,Tôi trượt thêm chút nữa đây.
Dialogue: 0,0:21:27.19,0:21:28.44,Default,,0,0,0,,Được.
Dialogue: 0,0:21:28.91,0:21:31.94,Default,,0,0,0,,[6:07 tối, ngày 26 tháng 11]
Dialogue: 0,0:21:33.12,0:21:35.74,Default,,0,0,0,,{\an8}[Hành lang Trung tâm huấn luyện]
Dialogue: 0,0:21:33.12,0:21:35.74,Default,,0,0,0,,Tôi hoàn toàn không nhớ chuyện hôm qua nữa.
Dialogue: 0,0:21:36.49,0:21:39.74,Default,,0,0,0,,Sau khi từ hồ về cô liền ngủ đến giờ mà.
Dialogue: 0,0:21:39.74,0:21:41.06,Default,,0,0,0,,Hồ ư?
Dialogue: 0,0:21:41.65,0:21:43.24,Default,,0,0,0,,Mèo Irina à.
Dialogue: 0,0:21:45.95,0:21:47.32,Default,,0,0,0,,[6:32 tối]
Dialogue: 0,0:21:47.32,0:21:49.74,Default,,0,0,0,,Tạm thời rời xa con người,
Dialogue: 0,0:21:49.74,0:21:50.99,Default,,0,0,0,,vừa đúng ý mình.
Dialogue: 0,0:21:49.74,0:21:50.99,Default,,0,0,0,,{\an8}[Phòng áp suất thấp không âm thanh]
Dialogue: 0,0:22:01.44,0:22:04.41,Default,,0,0,0,,♫Mặt Trời vô hình♫
Dialogue: 0,0:22:04.41,0:22:09.70,Default,,0,0,0,,♫Chìm vào giấc chiêm bao\Ntrong căn phòng thiền♫
Dialogue: 0,0:22:11.65,0:22:18.15,Default,,0,0,0,,♫Như thể liên hệ với ngày mai♫
Dialogue: 0,0:22:22.61,0:22:26.99,Default,,0,0,0,,♫Con đường được chúng ta thắp sáng♫
Dialogue: 0,0:22:28.24,0:22:34.11,Default,,0,0,0,,♫Không có một biển báo♫
Dialogue: 0,0:22:34.11,0:22:43.74,Default,,0,0,0,,♫Ngẩng đầu nhìn hình dáng những vì sao♫
Dialogue: 0,0:22:43.74,0:22:48.11,Default,,0,0,0,,♫Không phải là thế giới\Nmà ai cũng có thể quyết định♫
Dialogue: 0,0:22:48.11,0:22:56.16,Default,,0,0,0,,♫Bởi vì thật nhiều màu sắc sẽ tuôn ra♫
Dialogue: 0,0:22:56.16,0:23:05.82,Default,,0,0,0,,♫Tìm thấy bạn trên khoảng trời này♫
Dialogue: 0,0:23:05.82,0:23:13.82,Default,,0,0,0,,♫Chẳng hiểu vì sao ngày hôm nay\Nlại khiến người ta yêu thương đến vậy♫
Dialogue: 0,0:23:15.15,0:23:19.49,Default,,0,0,0,,♫Thật muốn cùng bạn vui vẻ cười đùa♫
Dialogue: 0,0:23:37.74,0:23:40.11,Default,,0,0,0,,[Tập sau: Huấn Luyện Tách Biệt]
