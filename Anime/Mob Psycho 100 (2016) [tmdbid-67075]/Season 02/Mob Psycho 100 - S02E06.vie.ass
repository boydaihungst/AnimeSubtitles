Dialogue: 0,0:00:01.13,0:00:03.42,Default,,0,0,0,,{\an8}4 NĂM TRƯỚC
Dialogue: 0,0:00:08.80,0:00:10.30,Default,,0,0,0,,MÁY NƯỚC LẠNH SIÊU NGON THẾ HỆ MỚI
Dialogue: 0,0:00:10.39,0:00:12.01,Default,,0,0,0,,{\an8}TÌM KHÁCH HÀNG MỚI,\NQUAN TRỌNG NHẤT LÀ CƯỜI
Dialogue: 0,0:00:12.10,0:00:15.18,Default,,0,0,0,,Cảm ơn bạn đã sử dụng\Ndịch vụ của chúng tôi.
Dialogue: 0,0:00:15.27,0:00:17.85,Default,,0,0,0,,Thật sao? Tôi sẽ chuẩn bị ngay cho bạn.
Dialogue: 0,0:00:19.02,0:00:20.56,Default,,0,0,0,,Không có gì ạ.
Dialogue: 0,0:00:20.73,0:00:24.32,Default,,0,0,0,,Không đâu. Tất cả là nhờ có bạn.
Dialogue: 0,0:00:30.95,0:00:32.78,Default,,0,0,0,,TẬP ĐOÀN CLINCITY
Dialogue: 0,0:00:37.87,0:00:39.37,Default,,0,0,0,,Tôi sẽ thuê chỗ này.
Dialogue: 0,0:00:39.46,0:00:41.00,Default,,0,0,0,,Cảm ơn rất nhiều.
Dialogue: 0,0:00:41.08,0:00:43.71,Default,,0,0,0,,{\an8}TUYỂN DỤNG
Dialogue: 0,0:00:43.79,0:00:45.63,Default,,0,0,0,,Mình nên làm việc gì tiếp theo đây?
Dialogue: 0,0:00:47.05,0:00:50.01,Default,,0,0,0,,Dù sao thì cứ thuê chỗ này trước đã.
Dialogue: 0,0:00:54.14,0:00:56.97,Default,,0,0,0,,KIẾM THẬT NHIỀU TIỀN VỚI THỨ NÀY
Dialogue: 0,0:02:31.57,0:02:32.44,Default,,0,0,0,,CÂU LẠC BỘ THỂ HÌNH
Dialogue: 0,0:02:32.53,0:02:34.28,Default,,0,0,0,,31,
Dialogue: 0,0:02:34.53,0:02:36.78,Default,,0,0,0,,32,
Dialogue: 0,0:02:36.99,0:02:39.24,Default,,0,0,0,,33,
Dialogue: 0,0:02:40.16,0:02:42.70,Default,,0,0,0,,34,
Dialogue: 0,0:02:44.08,0:02:47.00,Default,,0,0,0,,35...
Dialogue: 0,0:02:48.67,0:02:50.67,Default,,0,0,0,,Tuyệt vời! Đây là một kỉ lục mới.
Dialogue: 0,0:02:50.75,0:02:53.46,Default,,0,0,0,,Kageyama, cậu đã mạnh hơn rồi.
Dialogue: 0,0:02:53.63,0:02:55.55,Default,,0,0,0,,Cơ bắp của cậu đã phát triển.
Dialogue: 0,0:02:55.63,0:02:57.97,Default,,0,0,0,,Công sức của cậu đã được đền đáp.
Dialogue: 0,0:02:58.55,0:03:01.64,Default,,0,0,0,,{\i1}Mặc dù mình thấy tập thể hình rất chán,{\i}
Dialogue: 0,0:03:02.89,0:03:05.77,Default,,0,0,0,,{\i1}nhưng thấy cậu ấy cải thiện từng chút một,{\i}
Dialogue: 0,0:03:05.85,0:03:07.90,Default,,0,0,0,,{\i1}nó thực sự đã giúp cậu ấy tự tin hơn.{\i}
Dialogue: 0,0:03:08.69,0:03:11.52,Default,,0,0,0,,{\i1}Cậu ấy có vẻ không còn lo lắng\Nnhư thường lệ nữa.{\i}
Dialogue: 0,0:03:12.03,0:03:14.19,Default,,0,0,0,,Mob có vẻ rất vui với việc tập thể hình.
Dialogue: 0,0:03:14.86,0:03:15.90,Default,,0,0,0,,Đúng vậy!
Dialogue: 0,0:03:15.99,0:03:18.24,Default,,0,0,0,,Nếu được thì đưa cậu này\Nđi tập thể hình luôn đi.
Dialogue: 0,0:03:18.32,0:03:19.82,Default,,0,0,0,,Hôm nay là sinh nhật của cậu ấy.
Dialogue: 0,0:03:20.28,0:03:21.33,Default,,0,0,0,,Thôi, cảm ơn.
Dialogue: 0,0:03:21.41,0:03:24.08,Default,,0,0,0,,Kijibayashi, hôm nay là sinh nhật cậu hả?
Dialogue: 0,0:03:24.16,0:03:25.41,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:03:26.33,0:03:29.13,Default,,0,0,0,,Chúc mừng. Hãy mở tiệc nào!
Dialogue: 0,0:03:29.58,0:03:31.63,Default,,0,0,0,,Hội trưởng,\Ntuần trước là sinh nhật tôi đấy.
Dialogue: 0,0:03:31.71,0:03:33.46,Default,,0,0,0,,Hả? Kumagawa nữa sao?
Dialogue: 0,0:03:33.55,0:03:36.05,Default,,0,0,0,,Nếu có thể,\Ncùng tổ chức tiệc sinh nhật đi!
Dialogue: 0,0:03:36.26,0:03:38.34,Default,,0,0,0,,Hãy cùng ăn mừng vào bữa tối.\NThấy thế nào?
Dialogue: 0,0:03:38.51,0:03:40.76,Default,,0,0,0,,Saruta, ý kiến hay đấy.
Dialogue: 0,0:03:40.85,0:03:42.97,Default,,0,0,0,,VĂN PHÒNG TƯ VẤN TÂM LINH
Dialogue: 0,0:03:43.39,0:03:44.60,Default,,0,0,0,,Cái gì vậy?
Dialogue: 0,0:03:44.93,0:03:48.14,Default,,0,0,0,,Đây là loại muối cực kỳ có giá trị\Nđược lấy từ đồng muối Salar de Uyuni.
Dialogue: 0,0:03:48.23,0:03:50.06,Default,,0,0,0,,Nó rất hiệu quả trong việc trừ tà.
Dialogue: 0,0:03:50.52,0:03:51.94,Default,,0,0,0,,Xin lỗi, tôi có điện thoại.
Dialogue: 0,0:03:52.27,0:03:54.57,Default,,0,0,0,,Xin chào, đây là\NVăn phòng Tư vấn Tâm linh.
Dialogue: 0,0:03:54.86,0:03:56.99,Default,,0,0,0,,Cái gì? Linh hồn đậu phụ đông lạnh?
Dialogue: 0,0:03:57.40,0:04:00.20,Default,,0,0,0,,Tôi đã nghe nói tới. Cứ để cho tôi lo.
Dialogue: 0,0:04:00.62,0:04:04.08,Default,,0,0,0,,{\i1}Nhưng gần đây, các yêu cầu cứ tới dồn dập.{\i}
Dialogue: 0,0:04:04.58,0:04:07.46,Default,,0,0,0,,{\i1}- Chúc mừng sinh nhật\N- Chúc mừng sinh nhật{\i}
Dialogue: 0,0:04:07.71,0:04:10.21,Default,,0,0,0,,{\i1}- Kijibayashi và Kumagawa{\i}\N{\i1}- Kijibayashi và Kumagawa{\i}
Dialogue: 0,0:04:10.29,0:04:13.29,Default,,0,0,0,,{\i1}- Chúc mừng sinh nhật\N- Chúc mừng sinh nhật{\i}
Dialogue: 0,0:04:13.38,0:04:15.55,Default,,0,0,0,,Chúc mừng sinh nhật!
Dialogue: 0,0:04:15.63,0:04:18.59,Default,,0,0,0,,Cứ uống bao nhiêu tùy thích!
Dialogue: 0,0:04:21.51,0:04:26.31,Default,,0,0,0,,Nhưng tôi không ngờ cậu sẽ ở lại\NCâu lạc bộ Thể hình lâu như vậy.
Dialogue: 0,0:04:26.52,0:04:28.81,Default,,0,0,0,,Tôi tưởng cậu sẽ bỏ chạy ngay đấy.
Dialogue: 0,0:04:28.98,0:04:31.44,Default,,0,0,0,,Kageyama rất kiên trì.
Dialogue: 0,0:04:31.52,0:04:33.98,Default,,0,0,0,,Cậu có mục tiêu nào không?
Dialogue: 0,0:04:34.19,0:04:35.78,Default,,0,0,0,,Tôi nghĩ kiên trì trong nửa năm
Dialogue: 0,0:04:35.86,0:04:38.82,Default,,0,0,0,,là đạt chuẩn trung bình\Ncủa học sinh lớp tám rồi.
Dialogue: 0,0:04:39.11,0:04:40.32,Default,,0,0,0,,Không.
Dialogue: 0,0:04:40.61,0:04:44.45,Default,,0,0,0,,Mục tiêu của Kageyama không thể\Nchỉ đơn giản như vậy.
Dialogue: 0,0:04:44.99,0:04:48.41,Default,,0,0,0,,{\i1}Chúng ta không nên chểnh mảng.\NNếu không, cậu ấy sẽ vượt mặt đấy.{\i}
Dialogue: 0,0:04:49.04,0:04:51.83,Default,,0,0,0,,Cậu chỉ muốn cô gái mà cậu thích\Nđể ý đến cậu phải không?
Dialogue: 0,0:04:52.42,0:04:55.25,Default,,0,0,0,,Ban đầu đúng là vậy, nhưng bây giờ...
Dialogue: 0,0:04:55.55,0:04:58.34,Default,,0,0,0,,Mob, cậu vẫn chưa quên chứ?
Dialogue: 0,0:04:58.42,0:05:00.84,Default,,0,0,0,,Cậu sẽ giúp tôi tìm một nhà ngoại cảm.
Dialogue: 0,0:05:01.72,0:05:03.01,Default,,0,0,0,,Chị vẫn tìm họ sao?
Dialogue: 0,0:05:03.09,0:05:04.35,Default,,0,0,0,,Tất nhiên.
Dialogue: 0,0:05:04.43,0:05:06.76,Default,,0,0,0,,Cậu nghĩ Câu lạc bộ Ngoại cảm để làm gì?
Dialogue: 0,0:05:06.97,0:05:07.97,Default,,0,0,0,,Điều đó không quan trọng.
Dialogue: 0,0:05:08.06,0:05:10.89,Default,,0,0,0,,- Lát nữa chúng ta đi hát karaoke chứ?\N- Nó không quan trọng sao?
Dialogue: 0,0:05:11.44,0:05:12.52,Default,,0,0,0,,Karaoke?
Dialogue: 0,0:05:12.60,0:05:14.61,Default,,0,0,0,,Cái gì? Cậu chưa bao giờ đi sao?
Dialogue: 0,0:05:14.73,0:05:17.90,Default,,0,0,0,,Vậy đi thôi. Hiếm khi ta đi cùng nhau.
Dialogue: 0,0:05:18.53,0:05:21.20,Default,,0,0,0,,Cậu đã nói vậy rồi\Nthì tôi còn có thể nói gì được nữa?
Dialogue: 0,0:05:21.65,0:05:23.28,Default,,0,0,0,,{\i1}Mình nên hát bài gì nhỉ?{\i}
Dialogue: 0,0:05:23.70,0:05:25.24,Default,,0,0,0,,Mob, cậu ngại hả?
Dialogue: 0,0:05:25.58,0:05:27.79,Default,,0,0,0,,Ngay khi bắt đầu hát, cậu sẽ ổn thôi.
Dialogue: 0,0:05:27.87,0:05:30.66,Default,,0,0,0,,Không. Chỉ là lâu lắm rồi\Nchúng ta mới làm như vậy.
Dialogue: 0,0:05:31.12,0:05:34.17,Default,,0,0,0,,Đi chơi với mọi người như thế này.
Dialogue: 0,0:05:35.34,0:05:37.17,Default,,0,0,0,,{\i1}Mình rất vui.{\i}
Dialogue: 0,0:05:39.34,0:05:40.55,Default,,0,0,0,,THẦY REIGEN
Dialogue: 0,0:05:42.59,0:05:43.63,Default,,0,0,0,,Alô?
Dialogue: 0,0:05:43.72,0:05:44.59,Default,,0,0,0,,{\i1}Mob?{\i}
Dialogue: 0,0:05:44.76,0:05:46.85,Default,,0,0,0,,{\i1}Thầy gặp một ác linh khó giải quyết...{\i}
Dialogue: 0,0:05:46.93,0:05:48.89,Default,,0,0,0,,{\i1}Không, thầy có thể tự xử nó dễ dàng.{\i}
Dialogue: 0,0:05:48.97,0:05:50.31,Default,,0,0,0,,{\i1}Nhưng gần đây có nhiều việc quá.{\i}
Dialogue: 0,0:05:50.39,0:05:52.39,Default,,0,0,0,,{\i1}Thầy không muốn tiếp tục\Nsử dụng sức mạnh của mình...{\i}
Dialogue: 0,0:05:52.85,0:05:53.98,Default,,0,0,0,,{\i1}Mob?{\i}
Dialogue: 0,0:05:54.48,0:05:57.48,Default,,0,0,0,,Hôm nay thầy có thể tự làm một mình không?
Dialogue: 0,0:06:00.23,0:06:04.36,Default,,0,0,0,,Chẳng phải em luôn bảo thầy\Nđừng gọi em đến đột xuất sao?
Dialogue: 0,0:06:05.74,0:06:07.03,Default,,0,0,0,,{\i1}Em vừa nói gì cơ?{\i}
Dialogue: 0,0:06:07.12,0:06:08.24,Default,,0,0,0,,{\i1}Em cũng đâu có việc gì làm.{\i}
Dialogue: 0,0:06:08.33,0:06:09.87,Default,,0,0,0,,{\i1}Có lý do gì khiến em không tới được sao?{\i}
Dialogue: 0,0:06:11.08,0:06:13.71,Default,,0,0,0,,{\i1}Chúng ta có khách hàng cần giúp đỡ.{\i}
Dialogue: 0,0:06:13.96,0:06:17.04,Default,,0,0,0,,{\i1}Thầy sẽ đợi em.\NHãy đến đây nhanh nhất có thể nhé.{\i}
Dialogue: 0,0:06:22.13,0:06:23.72,Default,,0,0,0,,Kageyama, có chuyện gì vậy?
Dialogue: 0,0:06:23.93,0:06:26.34,Default,,0,0,0,,Lại là người thầy bí ẩn đó sao?
Dialogue: 0,0:06:26.89,0:06:30.56,Default,,0,0,0,,Em phải đi làm thêm gấp.\NEm không thể đi karaoke được.
Dialogue: 0,0:06:31.02,0:06:33.64,Default,,0,0,0,,Em xin lỗi, hôm nay là sinh nhật các anh.
Dialogue: 0,0:06:33.85,0:06:36.19,Default,,0,0,0,,Đừng lo, không sao đâu.
Dialogue: 0,0:06:36.56,0:06:38.73,Default,,0,0,0,,Đừng bận tâm. Chúng tôi đã rất vui.
Dialogue: 0,0:06:38.98,0:06:43.19,Default,,0,0,0,,Việc gì cũng có thứ tự ưu tiên mà.\NKhông thể làm khác được.
Dialogue: 0,0:06:50.03,0:06:54.37,Default,,0,0,0,,Nghe đồn có con ma nam ngã lên đầu nhọn\Ncủa một miếng đậu phụ đông lạnh và chết.
Dialogue: 0,0:06:54.50,0:06:56.21,Default,,0,0,0,,Ai mà biết được đó lại là sự thật chứ?
Dialogue: 0,0:06:57.13,0:06:59.29,Default,,0,0,0,,Mỗi lần nhìn thấy đậu phụ,
Dialogue: 0,0:06:59.38,0:07:02.63,Default,,0,0,0,,tôi lại nhớ đến cái chết của mình!
Dialogue: 0,0:07:03.76,0:07:05.51,Default,,0,0,0,,Tiêu diệt nó ngay đi!
Dialogue: 0,0:07:05.80,0:07:07.14,Default,,0,0,0,,Đừng lo!
Dialogue: 0,0:07:07.30,0:07:10.10,Default,,0,0,0,,Tôi đã bảo đệ tử\Nđến đây nhanh nhất có thể rồi.
Dialogue: 0,0:07:16.31,0:07:18.02,Default,,0,0,0,,Mob, cảm ơn em.
Dialogue: 0,0:07:28.99,0:07:29.95,Default,,0,0,0,,Có chuyện gì vậy?
Dialogue: 0,0:07:30.37,0:07:33.95,Default,,0,0,0,,Em phải đi học.\NEm phải có thời gian riêng của mình.
Dialogue: 0,0:07:34.25,0:07:36.58,Default,,0,0,0,,Xin đừng gọi em đến đột xuất như vậy nữa.
Dialogue: 0,0:07:36.66,0:07:38.00,Default,,0,0,0,,Thời gian riêng sao?
Dialogue: 0,0:07:38.08,0:07:40.54,Default,,0,0,0,,Không phải chỉ là hoạt động\Nở Câu lạc bộ Thể Hình thôi sao?
Dialogue: 0,0:07:41.42,0:07:44.42,Default,,0,0,0,,Hay là em lại vướng vào\Nmối quan hệ lừa đảo nào rồi?
Dialogue: 0,0:07:44.84,0:07:46.72,Default,,0,0,0,,Em vẫn dễ bị lừa quá.
Dialogue: 0,0:07:46.88,0:07:49.84,Default,,0,0,0,,Em thực sự chưa tiến bộ gì cả.
Dialogue: 0,0:07:52.31,0:07:54.60,Default,,0,0,0,,Thầy không biết em làm gì cùng bạn bè,
Dialogue: 0,0:07:54.93,0:07:57.10,Default,,0,0,0,,nhưng họ có biết gì về em không?
Dialogue: 0,0:07:57.77,0:08:00.10,Default,,0,0,0,,Thầy đang giúp mọi người.
Dialogue: 0,0:08:00.69,0:08:03.90,Default,,0,0,0,,Giúp thầy cũng có ý nghĩa đối với em.
Dialogue: 0,0:08:04.19,0:08:06.28,Default,,0,0,0,,Hơn nữa, thầy là người chỉ dạy em.
Dialogue: 0,0:08:06.53,0:08:09.16,Default,,0,0,0,,Em có thể kiểm soát linh lực
Dialogue: 0,0:08:09.32,0:08:11.41,Default,,0,0,0,,là nhờ sự giúp đỡ của thầy,\Nkhông ít thì nhiều.
Dialogue: 0,0:08:12.16,0:08:13.12,Default,,0,0,0,,Nghe này.
Dialogue: 0,0:08:13.53,0:08:15.83,Default,,0,0,0,,Hãy cẩn thận khi kết bạn.
Dialogue: 0,0:08:15.95,0:08:19.67,Default,,0,0,0,,Nếu chúng ngăn cản em\Ntiêu diệt linh hồn thì bỏ chúng đi.
Dialogue: 0,0:08:20.08,0:08:23.34,Default,,0,0,0,,Dù sao thì chúng cũng\Nchẳng quan tâm mấy đến em.
Dialogue: 0,0:08:23.67,0:08:25.59,Default,,0,0,0,,Chúng chỉ chế giễu\Nsự yếu đuối của người khác
Dialogue: 0,0:08:25.67,0:08:27.59,Default,,0,0,0,,- và lấy nó ra mua vui...\N- Không đâu.
Dialogue: 0,0:08:29.43,0:08:31.72,Default,,0,0,0,,Được rồi, có thể là thầy quá lời.
Dialogue: 0,0:08:32.76,0:08:34.56,Default,,0,0,0,,Họ không khinh thường em.
Dialogue: 0,0:08:35.77,0:08:36.85,Default,,0,0,0,,À...
Dialogue: 0,0:08:37.64,0:08:42.02,Default,,0,0,0,,Thầy Reigen, không phải lúc nào\Nthầy cũng đúng đâu.
Dialogue: 0,0:08:42.19,0:08:44.11,Default,,0,0,0,,{\i1}Ôi không, mình nói sai rồi.{\i}
Dialogue: 0,0:08:44.19,0:08:46.28,Default,,0,0,0,,Mob, em đang nói gì vậy?
Dialogue: 0,0:08:46.36,0:08:47.49,Default,,0,0,0,,Em mệt quá rồi sao?
Dialogue: 0,0:08:47.57,0:08:49.45,Default,,0,0,0,,Chúng ta sẽ ăn mì ramen trước khi em về.
Dialogue: 0,0:08:49.99,0:08:52.20,Default,,0,0,0,,Không chỉ là họ không khinh thường em,
Dialogue: 0,0:08:52.49,0:08:54.49,Default,,0,0,0,,mà em cũng không dễ bị người khác lừa.
Dialogue: 0,0:08:59.46,0:09:00.33,Default,,0,0,0,,{\an8}LỄ TÂN
Dialogue: 0,0:09:00.41,0:09:01.54,Default,,0,0,0,,{\an8}Thằng ranh Mob đó.
Dialogue: 0,0:09:01.67,0:09:03.96,Default,,0,0,0,,Mình đã hẹn trước hôm nay rồi,
Dialogue: 0,0:09:04.46,0:09:06.50,Default,,0,0,0,,nhưng nó vẫn bỏ việc làm thêm.
Dialogue: 0,0:09:07.09,0:09:10.84,Default,,0,0,0,,Hôm qua mình thật sự đã nói quá lời\Nvà làm nó khó chịu sao?
Dialogue: 0,0:09:11.63,0:09:12.51,Default,,0,0,0,,{\i1}Không.{\i}
Dialogue: 0,0:09:12.89,0:09:17.52,Default,,0,0,0,,{\i1}Nhưng ngoài mình ra, không ai có thể\Nxua tan đi phiền não của nó.{\i}
Dialogue: 0,0:09:18.14,0:09:21.60,Default,,0,0,0,,{\i1}Nếu bỏ mình, nó sẽ quay lại\Nthành kẻ cô độc như trước đây.{\i}
Dialogue: 0,0:09:22.02,0:09:25.52,Default,,0,0,0,,{\i1}Đừng lo, chắc chắn nó sẽ quay lại đây.{\i}
Dialogue: 0,0:09:27.32,0:09:28.94,Default,,0,0,0,,Lạ thật đấy, Shigeo.
Dialogue: 0,0:09:29.19,0:09:30.95,Default,,0,0,0,,Hôm nay anh về sớm quá.
Dialogue: 0,0:09:31.49,0:09:32.95,Default,,0,0,0,,Ritsu, mừng em về nhà.
Dialogue: 0,0:09:33.28,0:09:36.28,Default,,0,0,0,,Anh quyết định không đến\Nchỗ của thầy một thời gian.
Dialogue: 0,0:09:36.99,0:09:38.41,Default,,0,0,0,,Như vậy cũng tốt,
Dialogue: 0,0:09:38.54,0:09:39.79,Default,,0,0,0,,nhưng sao lại đột ngột như vậy?
Dialogue: 0,0:09:40.04,0:09:41.00,Default,,0,0,0,,Họ đã cãi nhau.
Dialogue: 0,0:09:41.16,0:09:43.12,Default,,0,0,0,,Cậu ấy tạm biệt tên kia rồi.
Dialogue: 0,0:09:43.50,0:09:44.96,Default,,0,0,0,,Không phải như vậy.
Dialogue: 0,0:09:45.38,0:09:47.25,Default,,0,0,0,,Anh đã suy nghĩ kĩ\Ntrước khi đưa ra quyết định.
Dialogue: 0,0:09:47.80,0:09:49.13,Default,,0,0,0,,Suốt thời gian qua,
Dialogue: 0,0:09:49.51,0:09:52.17,Default,,0,0,0,,{\i1}anh đã quá nghe lời thầy Reigen.{\i}
Dialogue: 0,0:09:52.76,0:09:55.76,Default,,0,0,0,,{\i1}Anh cứ tưởng thế sẽ làm mọi thứ suôn sẻ.{\i}
Dialogue: 0,0:09:56.01,0:09:57.60,Default,,0,0,0,,{\i1}Cuộc sống quả là dễ dàng hơn thật.{\i}
Dialogue: 0,0:09:57.93,0:09:58.89,Default,,0,0,0,,{\i1}Tuy nhiên...{\i}
Dialogue: 0,0:09:59.27,0:10:02.27,Default,,0,0,0,,Em thực sự chưa tiến bộ gì cả.
Dialogue: 0,0:10:03.35,0:10:05.73,Default,,0,0,0,,Anh nhận ra không thể tiếp tục như vậy.
Dialogue: 0,0:10:05.94,0:10:09.53,Default,,0,0,0,,Anh muốn thử và suy nghĩ lại\Nvề các vấn đề của riêng mình.
Dialogue: 0,0:10:12.07,0:10:13.86,Default,,0,0,0,,{\i1}Thỉnh thoảng anh muốn\Nchơi điện tử với em chứ?{\i}
Dialogue: 0,0:10:15.03,0:10:17.20,Default,,0,0,0,,{\i1}Tiếc quá, Reigen.{\i}
Dialogue: 0,0:10:17.37,0:10:19.70,Default,,0,0,0,,{\i1}Ngươi làm rối tung rồi. Là lỗi của ngươi.{\i}
Dialogue: 0,0:10:21.33,0:10:23.58,Default,,0,0,0,,Tôi cảm thấy thứ nhập vào tôi\Nđã tiêu tan rồi.
Dialogue: 0,0:10:23.96,0:10:26.63,Default,,0,0,0,,Tập yoga xông hơi san hô thật là tuyệt.
Dialogue: 0,0:10:26.88,0:10:28.67,Default,,0,0,0,,Tốt quá.
Dialogue: 0,0:10:29.30,0:10:31.63,Default,,0,0,0,,{\i1}May là anh ta không bị nhập thật.{\i}
Dialogue: 0,0:10:32.38,0:10:33.59,Default,,0,0,0,,{\an8}4 NĂM TRƯỚC
Dialogue: 0,0:10:33.67,0:10:35.09,Default,,0,0,0,,{\an8\i1}Tuy nhiên, phải nói thật là,{\i}
Dialogue: 0,0:10:35.84,0:10:39.39,Default,,0,0,0,,{\i1}mình bắt đầu kinh doanh một mình.{\i}
Dialogue: 0,0:10:39.76,0:10:41.89,Default,,0,0,0,,{\i1}Không có Mob thì sao chứ?{\i}
Dialogue: 0,0:10:42.60,0:10:43.77,Default,,0,0,0,,{\i1}Mình sẽ làm như trước đây{\i}
Dialogue: 0,0:10:43.85,0:10:47.94,Default,,0,0,0,,{\i1}và giải quyết những nhiệm vụ\Ntrong khả năng của mình.{\i}
Dialogue: 0,0:10:48.69,0:10:51.19,Default,,0,0,0,,{\i1}Mình sẽ để việc trừ tà\Ncho người có năng lực thực thụ.{\i}
Dialogue: 0,0:10:51.57,0:10:52.74,Default,,0,0,0,,{\i1}Đúng vậy.{\i}
Dialogue: 0,0:10:53.07,0:10:54.82,Default,,0,0,0,,{\i1}Mình có thể tiết kiệm chi phí nhân sự.{\i}
Dialogue: 0,0:10:54.90,0:10:57.37,Default,,0,0,0,,{\i1}Mình cũng không cần giải quyết\Nrắc rối tuổi dậy thì của nhóc đó.{\i}
Dialogue: 0,0:10:57.82,0:10:59.53,Default,,0,0,0,,{\i1}Mình không có nhiều thời gian như vậy.{\i}
Dialogue: 0,0:11:00.45,0:11:03.33,Default,,0,0,0,,{\i1}Mình nên dùng thời gian rảnh\Nđể học thêm và mở mang tầm mắt.{\i}
Dialogue: 0,0:11:04.79,0:11:06.83,Default,,0,0,0,,{\i1}Cảm giác thật tích cực.{\i}
Dialogue: 0,0:11:07.38,0:11:08.75,Default,,0,0,0,,{\i1}Xin lỗi nhé, Mob.{\i}
Dialogue: 0,0:11:08.88,0:11:10.54,Default,,0,0,0,,{\i1}Em đâu ngờ\Nchuyện lại thành ra thế này nhỉ?{\i}
Dialogue: 0,0:11:10.71,0:11:12.76,Default,,0,0,0,,{\i1}Nhưng thầy không hề bận tâm.{\i}
Dialogue: 0,0:11:13.30,0:11:16.01,Default,,0,0,0,,{\i1}Chắc hẳn giờ em đang cô đơn lắm.{\i}
Dialogue: 0,0:11:16.09,0:11:18.84,Default,,0,0,0,,VĂN PHÒNG TƯ VẤN TÂM LINH
Dialogue: 0,0:11:30.48,0:11:34.15,Default,,0,0,0,,{\i1}Giờ chắc hẳn Mob thực sự hối hận rồi.{\i}
Dialogue: 0,0:11:34.86,0:11:37.20,Default,,0,0,0,,{\i1}Có thể nó quá xấu hổ\Nvà không biết phải làm sao.{\i}
Dialogue: 0,0:11:38.24,0:11:40.37,Default,,0,0,0,,{\i1}Là người lớn, mình có thể hiểu được.{\i}
Dialogue: 0,0:11:40.45,0:11:42.37,Default,,0,0,0,,{\i1}Mình không bận tâm.{\i}
Dialogue: 0,0:11:54.71,0:11:55.71,Default,,0,0,0,,Sao có thể như vậy?
Dialogue: 0,0:11:55.80,0:11:57.80,Default,,0,0,0,,Mob thật sự có vẻ rất hạnh phúc.
Dialogue: 0,0:11:57.88,0:11:59.93,Default,,0,0,0,,Cậu ta có nhiều bạn thân vậy sao?
Dialogue: 0,0:12:00.18,0:12:01.85,Default,,0,0,0,,Tại sao ngươi lại trốn?
Dialogue: 0,0:12:02.18,0:12:03.35,Default,,0,0,0,,Má Lúm...
Dialogue: 0,0:12:03.43,0:12:05.47,Default,,0,0,0,,Ta... Ta đâu có trốn.
Dialogue: 0,0:12:05.81,0:12:07.77,Default,,0,0,0,,Đừng lo lắng cho Mob.
Dialogue: 0,0:12:07.94,0:12:09.15,Default,,0,0,0,,Cậu ấy đang rất vui vẻ.
Dialogue: 0,0:12:09.23,0:12:12.06,Default,,0,0,0,,Tiếc quá. Ta không lo lắng cho cậu ta.
Dialogue: 0,0:12:12.23,0:12:13.65,Default,,0,0,0,,Thật là tốt.
Dialogue: 0,0:12:13.82,0:12:17.40,Default,,0,0,0,,Shigeo cũng không quan tâm ngươi.
Dialogue: 0,0:12:17.49,0:12:19.11,Default,,0,0,0,,Cậu ấy đang có cuộc sống dễ chịu.
Dialogue: 0,0:12:22.07,0:12:24.24,Default,,0,0,0,,Má Lúm, ngươi không lo sao?
Dialogue: 0,0:12:24.33,0:12:25.45,Default,,0,0,0,,Sao ta phải lo chứ?
Dialogue: 0,0:12:25.54,0:12:29.62,Default,,0,0,0,,Shigeo sẽ không dùng nhiều linh lực\Nnếu như không làm cho ta.
Dialogue: 0,0:12:29.71,0:12:31.92,Default,,0,0,0,,Ngươi định sẽ chỉ là
Dialogue: 0,0:12:32.00,0:12:35.75,Default,,0,0,0,,cái đuôi của một học sinh cấp hai thôi ư?
Dialogue: 0,0:12:36.09,0:12:37.42,Default,,0,0,0,,Quả là cuộc đời an nhàn.
Dialogue: 0,0:12:38.47,0:12:41.39,Default,,0,0,0,,Ngươi hi vọng được dùng\Nlinh lực của Mob để làm gì đó mà.
Dialogue: 0,0:12:41.51,0:12:43.10,Default,,0,0,0,,Thế thì thật đáng tiếc.
Dialogue: 0,0:12:43.51,0:12:46.68,Default,,0,0,0,,Mob đã quyết định\Nsống một cuộc đời bình thường.
Dialogue: 0,0:12:46.77,0:12:49.06,Default,,0,0,0,,Cậu ta không còn giá trị với ngươi rồi.
Dialogue: 0,0:12:49.27,0:12:53.52,Default,,0,0,0,,Cứ sống cuộc đời hạnh phúc\Nvới một cậu học sinh cấp hai đi.
Dialogue: 0,0:12:53.61,0:12:54.65,Default,,0,0,0,,Trong khi ngươi làm vậy,
Dialogue: 0,0:12:54.73,0:12:57.44,Default,,0,0,0,,ta sẽ phát triển hơn nữa.
Dialogue: 0,0:12:58.36,0:13:01.45,Default,,0,0,0,,Được rồi, ngươi vẫn vui vẻ.\NVậy là tốt rồi.
Dialogue: 0,0:13:01.66,0:13:04.70,Default,,0,0,0,,Ngươi vẫn đùa giỡn được như vậy.\NCó vẻ ta không cần lo cho ngươi rồi.
Dialogue: 0,0:13:05.49,0:13:07.75,Default,,0,0,0,,Có lẽ chúng ta cũng sẽ không gặp lại nữa.
Dialogue: 0,0:13:27.60,0:13:30.06,Default,,0,0,0,,Hãy cập nhật trang web nào.
Dialogue: 0,0:13:31.31,0:13:32.39,Default,,0,0,0,,KARAOKE
Dialogue: 0,0:13:32.48,0:13:34.27,Default,,0,0,0,,Sao? Cậu không về nhà à?
Dialogue: 0,0:13:34.69,0:13:37.94,Default,,0,0,0,,Chẳng phải cậu nói hôm nay\Nta sẽ không tìm nhà ngoại cảm sao?
Dialogue: 0,0:13:38.15,0:13:40.65,Default,,0,0,0,,Cậu đã bỏ lỡ một buổi karaoke\Nkhi có việc làm thêm, đúng không?
Dialogue: 0,0:13:40.78,0:13:42.49,Default,,0,0,0,,Cậu hiếm khi được tới đây\Nnên ta đi hát đi.
Dialogue: 0,0:13:42.66,0:13:44.45,Default,,0,0,0,,Nếu như có nhà ngoại cảm gần đây,
Dialogue: 0,0:13:44.53,0:13:46.20,Default,,0,0,0,,cậu sẽ cảm nhận được, đúng không?
Dialogue: 0,0:13:46.62,0:13:48.45,Default,,0,0,0,,Hát trong lúc tìm kiếm\Ncũng tốt mà, đúng không?
Dialogue: 0,0:13:48.54,0:13:50.62,Default,,0,0,0,,Không, khoan đã.\NTôi chưa chuẩn bị cho việc này.
Dialogue: 0,0:13:50.70,0:13:52.96,Default,,0,0,0,,Thôi nào, mau vào trong thôi.
Dialogue: 0,0:13:53.83,0:13:56.29,Default,,0,0,0,,Trang blog của thần tượng mới\Nbị người đọc đánh sập rồi.
Dialogue: 0,0:13:58.63,0:14:02.17,Default,,0,0,0,,Phải rồi, lâu rồi không kiểm tra\Ntrang FriendBook của mình.
Dialogue: 0,0:14:02.59,0:14:05.89,Default,,0,0,0,,Bây giờ ta có thể liên hệ với bạn bè\Nqua mạng xã hội bất cứ lúc nào.
Dialogue: 0,0:14:05.97,0:14:07.76,Default,,0,0,0,,Đúng là một thời kỳ tiện lợi.
Dialogue: 0,0:14:08.85,0:14:10.72,Default,,0,0,0,,Mình có một tin nhắn.
Dialogue: 0,0:14:10.85,0:14:12.39,Default,,0,0,0,,Xin lỗi vì đã không kiểm tra.
Dialogue: 0,0:14:12.48,0:14:14.14,Default,,0,0,0,,Tôi quá bận rộn với cuộc sống riêng.
Dialogue: 0,0:14:14.44,0:14:16.11,Default,,0,0,0,,Là ai đây? Có phải người đó không?
Dialogue: 0,0:14:16.19,0:14:17.36,Default,,0,0,0,,Bạn trung học của mình...
Dialogue: 0,0:14:17.57,0:14:18.77,Default,,0,0,0,,HÔM NAY LÀ SINH NHẬT BẠN, SINH NHẬT VUI VẺ
Dialogue: 0,0:14:19.82,0:14:23.45,Default,,0,0,0,,Đúng rồi, mình quên bẵng.
Dialogue: 0,0:14:24.28,0:14:26.16,Default,,0,0,0,,TÌM TIN NHẮN CHÚC MỪNG SINH NHẬT\NKHÔNG CÓ TIN NÀO
Dialogue: 0,0:14:26.28,0:14:27.83,Default,,0,0,0,,Thật đấy à?
Dialogue: 0,0:14:30.12,0:14:31.08,Default,,0,0,0,,Mình có một tin nhắn.
Dialogue: 0,0:14:31.16,0:14:33.00,Default,,0,0,0,,{\an8}ARATAKA, TỪ MẸ
Dialogue: 0,0:14:38.04,0:14:40.63,Default,,0,0,0,,{\an8}SINH NHẬT VUI VẺ. CON KHỎE CHỨ?\NCÔNG VIỆC THẾ NÀO? VẪN LỪA ĐẢO À?
Dialogue: 0,0:14:40.71,0:14:42.80,Default,,0,0,0,,{\an8}CON TRAI LỚN CỦA HÀNG XÓM KOBAYASHI\NKẾT HÔN THÁNG TRƯỚC
Dialogue: 0,0:14:45.13,0:14:47.09,Default,,0,0,0,,ĐÂY LÀ MÓN QUÀ TỪ MẸ.\NHÃY MỞ TẬP TIN ĐÍNH KÈM
Dialogue: 0,0:14:57.06,0:14:59.90,Default,,0,0,0,,TRANG TÌM KIẾM NGUỒN NHÂN LỰC\NMÔI TRƯỜNG LÀM VIỆC NĂNG ĐỘNG VÀ VUI VẺ
Dialogue: 0,0:15:12.41,0:15:13.62,Default,,0,0,0,,Cậu có vui không?
Dialogue: 0,0:15:14.66,0:15:15.75,Default,,0,0,0,,Tôi nghĩ vậy.
Dialogue: 0,0:15:18.33,0:15:20.38,Default,,0,0,0,,Mob, cậu không có cảm nhạc gì cả.
Dialogue: 0,0:15:21.50,0:15:22.50,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:15:28.18,0:15:31.06,Default,,0,0,0,,QUÁN BAR CON ĐƯỜNG HẠNH PHÚC
Dialogue: 0,0:15:33.22,0:15:35.23,Default,,0,0,0,,Trời ơi, Arataka.
Dialogue: 0,0:15:35.39,0:15:36.48,Default,,0,0,0,,Chào mừng.
Dialogue: 0,0:15:36.56,0:15:38.15,Default,,0,0,0,,Lâu rồi mới gặp anh.
Dialogue: 0,0:15:38.44,0:15:39.52,Default,,0,0,0,,Đó là anh Reigen.
Dialogue: 0,0:15:39.61,0:15:41.32,Default,,0,0,0,,Anh Reigen tới này.
Dialogue: 0,0:15:41.40,0:15:44.90,Default,,0,0,0,,Lại đây, mời ngồi.
Dialogue: 0,0:15:45.19,0:15:46.53,Default,,0,0,0,,Một nước chanh chua.
Dialogue: 0,0:15:47.03,0:15:48.41,Default,,0,0,0,,Làm thật chua giúp tôi.
Dialogue: 0,0:15:48.95,0:15:50.53,Default,,0,0,0,,Anh uống được chứ?
Dialogue: 0,0:15:50.70,0:15:51.70,Default,,0,0,0,,Được.
Dialogue: 0,0:15:52.58,0:15:53.83,Default,,0,0,0,,{\i1}Những khách quen tới đây{\i}
Dialogue: 0,0:15:53.91,0:15:58.25,Default,,0,0,0,,{\i1}đều là những người dễ bị lừa\Nbởi tiếp thị trực tiếp hay tà giáo.{\i}
Dialogue: 0,0:15:58.87,0:16:03.21,Default,,0,0,0,,{\i1}Họ tới đây để than vãn\Nhoặc bàn về những rắc rối của mình{\i}
Dialogue: 0,0:16:03.34,0:16:04.92,Default,,0,0,0,,{\i1}nhằm giải khuây.{\i}
Dialogue: 0,0:16:05.01,0:16:06.09,Default,,0,0,0,,QUÁN BAR CON ĐƯỜNG HẠNH PHÚC
Dialogue: 0,0:16:06.59,0:16:07.97,Default,,0,0,0,,{\i1}Với người trong lĩnh vực của tôi,{\i}
Dialogue: 0,0:16:08.05,0:16:09.80,Default,,0,0,0,,{\i1}đây chính là nơi hoàn hảo để kiếm ăn.{\i}
Dialogue: 0,0:16:10.14,0:16:12.39,Default,,0,0,0,,{\i1}Đây là nơi tâm hồn yếu đuối gặp nhau.{\i}
Dialogue: 0,0:16:12.68,0:16:14.35,Default,,0,0,0,,Nghe này, anh Reigen.
Dialogue: 0,0:16:14.43,0:16:17.27,Default,,0,0,0,,Trước đây, có một phụ nữ xinh đẹp\Nlớn tuổi hơn đã tán tỉnh tôi.
Dialogue: 0,0:16:17.35,0:16:20.40,Default,,0,0,0,,Tôi đi với cô ấy mới biết\Nchúng tôi ghé thăm phòng triển lãm tranh.
Dialogue: 0,0:16:20.48,0:16:23.77,Default,,0,0,0,,Nhưng anh lại được đưa tới\Nmột buổi triển lãm tranh giả sao?
Dialogue: 0,0:16:23.90,0:16:25.23,Default,,0,0,0,,Đó là buổi hẹn hò lừa đảo.
Dialogue: 0,0:16:26.03,0:16:28.74,Default,,0,0,0,,{\i1}Lắng nghe rắc rối của họ\Nvà đưa ra những lời khuyên.{\i}
Dialogue: 0,0:16:28.82,0:16:30.20,Default,,0,0,0,,{\i1}Điều đó khiến họ kính nể tôi.{\i}
Dialogue: 0,0:16:30.66,0:16:31.82,Default,,0,0,0,,{\i1}Với tôi,{\i}
Dialogue: 0,0:16:32.07,0:16:34.74,Default,,0,0,0,,{\i1}liệu họ có phải bạn bè không?{\i}
Dialogue: 0,0:16:41.58,0:16:44.34,Default,,0,0,0,,Hôm nay là sinh nhật của tôi.
Dialogue: 0,0:16:45.67,0:16:46.76,Default,,0,0,0,,Chúc mừng sinh nhật.
Dialogue: 0,0:16:46.88,0:16:48.80,Default,,0,0,0,,Chúc mừng sinh nhật.
Dialogue: 0,0:16:48.88,0:16:49.97,Default,,0,0,0,,Chúc mừng sinh nhật.
Dialogue: 0,0:16:50.34,0:16:51.43,Default,,0,0,0,,Cảm ơn.
Dialogue: 0,0:16:52.26,0:16:54.97,Default,,0,0,0,,Vì hôm nay là sinh nhật anh\Nnên thật đúng lúc.
Dialogue: 0,0:16:55.06,0:16:59.56,Default,,0,0,0,,Tôi đã mua một chiếc gối\Nqua phương tiện đặc biệt.
Dialogue: 0,0:16:59.64,0:17:03.23,Default,,0,0,0,,Đó là chiếc gối xốp để anh có thể\Nngủ thật sâu. Giá là 120.000 yên...
Dialogue: 0,0:17:07.44,0:17:10.03,Default,,0,0,0,,Arataka, anh mới uống một ly.
Dialogue: 0,0:17:10.20,0:17:11.49,Default,,0,0,0,,Mặt anh đã đỏ rồi.
Dialogue: 0,0:17:11.57,0:17:12.82,Default,,0,0,0,,Anh ổn chứ?
Dialogue: 0,0:17:13.20,0:17:14.49,Default,,0,0,0,,Có lẽ là không.
Dialogue: 0,0:17:18.08,0:17:20.00,Default,,0,0,0,,Này, có chuyện gì vậy?
Dialogue: 0,0:17:20.75,0:17:22.62,Default,,0,0,0,,Tính tiền cho tôi đi.
Dialogue: 0,0:17:27.67,0:17:29.47,Default,,0,0,0,,{\i1}Có vẻ như phản tác dụng rồi.{\i}
Dialogue: 0,0:17:29.76,0:17:32.09,Default,,0,0,0,,{\i1}Mình tưởng ai cũng được.\NMình chỉ muốn nói chuyện với ai đó.{\i}
Dialogue: 0,0:17:33.22,0:17:36.68,Default,,0,0,0,,{\i1}Hóa ra mình không có bạn bè nào cả.{\i}
Dialogue: 0,0:17:37.93,0:17:40.31,Default,,0,0,0,,{\i1}Mình đâu có pha chút rượu nào đâu.{\i}
Dialogue: 0,0:17:51.57,0:17:53.36,Default,,0,0,0,,{\i1}Không ổn rồi.{\i}
Dialogue: 0,0:17:53.57,0:17:55.78,Default,,0,0,0,,{\i1}Mình đang trải qua giai đoạn rất tồi tệ.{\i}
Dialogue: 0,0:17:55.99,0:17:57.24,Default,,0,0,0,,{\i1}Một người như mình thật ra...{\i}
Dialogue: 0,0:17:58.49,0:17:59.91,Default,,0,0,0,,{\i1}Người như mình...{\i}
Dialogue: 0,0:18:00.91,0:18:02.79,Default,,0,0,0,,{\i1}Hóa ra mình thật sự...{\i}
Dialogue: 0,0:18:03.58,0:18:06.21,Default,,0,0,0,,{\i1}Mình là ai trên đời này?{\i}
Dialogue: 0,0:18:17.30,0:18:19.01,Default,,0,0,0,,{\i1}Mình cũng cần đặt ra mục tiêu.{\i}
Dialogue: 0,0:18:19.72,0:18:21.48,Default,,0,0,0,,{\i1}Một mục tiêu để trở thành ai đó.{\i}
Dialogue: 0,0:18:31.11,0:18:33.11,Default,,0,0,0,,{\i1}Sau khi ở một mình,\Nanh ấy đã hiểu ra mọi chuyện.{\i}
Dialogue: 0,0:18:33.20,0:18:35.82,Default,,0,0,0,,{\i1}Reigen đã có những thay đổi rõ rệt.{\i}
Dialogue: 0,0:18:41.37,0:18:44.62,Default,,0,0,0,,Reigen Arataka tôi đây sẽ nhận nhiệm vụ.
Dialogue: 0,0:18:45.17,0:18:48.00,Default,,0,0,0,,{\i1}Anh ấy bắt đầu dọn dẹp thị trấn.{\i}
Dialogue: 0,0:18:48.09,0:18:50.34,Default,,0,0,0,,{\i1}Anh ấy đăng tải những bài trừ tà lên mạng.{\i}
Dialogue: 0,0:18:50.50,0:18:56.22,Default,,0,0,0,,{\i1}Anh ấy cũng tổ chức các buổi hội thảo\Nvà tư vấn về mở rộng kinh doanh.{\i}
Dialogue: 0,0:18:56.39,0:19:00.10,Default,,0,0,0,,{\i1}Anh ấy cũng nhận yêu cầu như trước đây.{\i}
Dialogue: 0,0:19:00.60,0:19:03.27,Default,,0,0,0,,{\i1}Trong số các yêu cầu, có Tay chơi Sát thủ{\i}
Dialogue: 0,0:19:03.35,0:19:06.10,Default,,0,0,0,,{\i1}trên một game trực tuyến nổi tiếng,{\i}\NĐịa Ngục Ảo.
Dialogue: 0,0:19:06.19,0:19:08.61,Default,,0,0,0,,{\i1}Có tin đồn anh ta có thể là một linh hồn.{\i}
Dialogue: 0,0:19:08.69,0:19:12.57,Default,,0,0,0,,{\i1}Nhiều nhà ngoại cảm đã từ bỏ\Nyêu cầu khó khăn này.{\i}
Dialogue: 0,0:19:12.65,0:19:14.40,Default,,0,0,0,,HỎI Ý KIẾN SHINRA BANSHOMARU
Dialogue: 0,0:19:14.70,0:19:16.99,Default,,0,0,0,,{\i1}Tôi đã nghe nói tới rồi.\NTốt nhất là anh nên từ bỏ.{\i}
Dialogue: 0,0:19:17.20,0:19:19.53,Default,,0,0,0,,{\i1}Đó là không phải là thứ\Nchúng ta có thể xử lý.{\i}
Dialogue: 0,0:19:19.62,0:19:22.91,Default,,0,0,0,,{\i1}Sức mạnh siêu nhiên không thể vào\Nhệ thống máy tính được.{\i}
Dialogue: 0,0:19:23.16,0:19:24.16,Default,,0,0,0,,{\i1}Phải không?{\i}
Dialogue: 0,0:19:24.25,0:19:29.21,Default,,0,0,0,,{\i1}Đó là một yêu cầu\Nngay cả Mob cũng không giải quyết được.{\i}
Dialogue: 0,0:19:29.59,0:19:32.13,Default,,0,0,0,,{\i1}Tuy nhiên, Reigen đã dùng nhiều tài khoản{\i}
Dialogue: 0,0:19:32.21,0:19:36.55,Default,,0,0,0,,{\i1}để liên tục nâng cấp và cường hóa vũ khí\Ntrong nhiều ngày liên tiếp.{\i}
Dialogue: 0,0:19:36.84,0:19:40.01,Default,,0,0,0,,{\i1}Anh ta đặt bẫy và bao vây tay chơi ma,{\i}
Dialogue: 0,0:19:40.10,0:19:41.85,Default,,0,0,0,,{\i1}và khiến hắn phải đầu hàng.{\i}
Dialogue: 0,0:19:42.26,0:19:43.77,Default,,0,0,0,,{\i1}Rồi cuối cùng,{\i}
Dialogue: 0,0:19:43.85,0:19:45.60,Default,,0,0,0,,{\i1}việc trừ tà đã thành công.{\i}
Dialogue: 0,0:19:45.85,0:19:47.27,Default,,0,0,0,,Thật tuyệt vời.
Dialogue: 0,0:19:47.35,0:19:49.10,Default,,0,0,0,,Anh ấy đã tiêu diệt được linh hồn.
Dialogue: 0,0:19:49.19,0:19:50.86,Default,,0,0,0,,Anh làm bằng cách nào vậy?
Dialogue: 0,0:19:51.15,0:19:53.40,Default,,0,0,0,,Vì tôi là một nhà ngoại cảm.
Dialogue: 0,0:19:54.57,0:19:56.95,Default,,0,0,0,,{\i1}Mình tiêu quá nhiều vào trò chơi\Nnên còn mất nhiều tiền hơn.{\i}
Dialogue: 0,0:19:57.57,0:19:59.57,Default,,0,0,0,,{\i1}Nhờ có thành công của phi vụ này,{\i}
Dialogue: 0,0:19:59.66,0:20:03.54,Default,,0,0,0,,{\i1}Văn phòng Tư vấn Tâm linh\Nbắt đầu gia tăng sự nổi tiếng.{\i}
Dialogue: 0,0:20:03.95,0:20:06.58,Default,,0,0,0,,REIGEN ARATAKA LÀ BẬC THẦY THỰC THỤ\NANH ẤY TRỪ MA TRONG GAME TRỰC TUYẾN
Dialogue: 0,0:20:07.83,0:20:12.17,Default,,0,0,0,,{\i1}Có người bắt đầu gọi anh ấy là,\N"Người anh em của thành phố Seasoning".{\i}
Dialogue: 0,0:20:12.25,0:20:14.34,Default,,0,0,0,,{\i1}Sự nổi tiếng của anh ấy tăng nhanh chóng.{\i}
Dialogue: 0,0:20:15.01,0:20:18.13,Default,,0,0,0,,{\i1}Anh ấy còn được phỏng vấn trên tạp chí.{\i}
Dialogue: 0,0:20:18.72,0:20:20.64,Default,,0,0,0,,ĐỘ NỔI TIẾNG, 100%
Dialogue: 0,0:20:21.26,0:20:23.56,Default,,0,0,0,,{\i1}Một vài ngày sau...{\i}
Dialogue: 0,0:20:24.18,0:20:25.68,Default,,0,0,0,,Truyền hình?
Dialogue: 0,0:20:26.68,0:20:29.02,Default,,0,0,0,,Tôi thực sự nổi tiếng đến vậy sao?
Dialogue: 0,0:20:29.27,0:20:34.57,Default,,0,0,0,,Một nhà sản xuất tình cờ nghe nói về anh\Nvà khăng khăng mời anh tham gia.
Dialogue: 0,0:20:35.15,0:20:37.19,Default,,0,0,0,,Đó là kênh truyền hình quốc gia.
Dialogue: 0,0:20:37.78,0:20:40.16,Default,,0,0,0,,Nếu được khán giả yêu thích,
Dialogue: 0,0:20:40.28,0:20:43.33,Default,,0,0,0,,anh sẽ trở nên vĩ đại\Ntrong lĩnh vực ngoại cảm.
Dialogue: 0,0:20:46.41,0:20:49.25,Default,,0,0,0,,MỘT TUẦN SAU
Dialogue: 0,0:20:53.09,0:20:56.67,Default,,0,0,0,,{\i1}Thám Tử Siêu Nhiên...{\i}
Dialogue: 0,0:20:56.96,0:21:00.84,Default,,0,0,0,,{\i1}Sức mạnh siêu nhiên có tồn tại?\NChương trình đặc biệt.{\i}
Dialogue: 0,0:21:01.05,0:21:03.30,Default,,0,0,0,,Chúng ta đang trực tiếp trên truyền hình.
Dialogue: 0,0:21:03.76,0:21:06.72,Default,,0,0,0,,{\an8}Tôi là người dẫn chương trình,\NEbihara Morizo.
Dialogue: 0,0:21:06.85,0:21:09.35,Default,,0,0,0,,{\an8}Khách mời đặc biệt là chuyên gia\Nkhoa học viễn tưởng, Mogi Tatsuya
Dialogue: 0,0:21:09.43,0:21:11.23,Default,,0,0,0,,{\an8}và thần tượng, cô Satake
Dialogue: 0,0:21:11.69,0:21:13.40,Default,,0,0,0,,{\an8}- Rất vui được gặp mặt.\N- Xin chào mọi người.
Dialogue: 0,0:21:13.65,0:21:16.90,Default,,0,0,0,,{\an8}Chúng tôi còn mời một số nhà ngoại cảm.
Dialogue: 0,0:21:16.98,0:21:19.32,Default,,0,0,0,,{\an8}Cảm ơn vì đã tới đây hôm nay.
Dialogue: 0,0:21:19.44,0:21:20.78,Default,,0,0,0,,{\an8}Cảm ơn.
Dialogue: 0,0:21:20.86,0:21:21.91,Default,,0,0,0,,{\an8}JODO KIRIN, REIGEN ARATAKA
Dialogue: 0,0:21:22.07,0:21:23.20,Default,,0,0,0,,{\i1}Tuyệt thật.{\i}
Dialogue: 0,0:21:23.28,0:21:25.03,Default,,0,0,0,,{\i1}Mình được lên truyền hình rồi.{\i}
Dialogue: 0,0:21:25.24,0:21:27.95,Default,,0,0,0,,{\i1}Cảm giác thật tuyệt vời.{\i}
Dialogue: 0,0:21:29.33,0:21:34.42,Default,,0,0,0,,Chúng tôi mời tới một người\Nđã bị linh hồn nhập.
Dialogue: 0,0:21:34.50,0:21:38.67,Default,,0,0,0,,Xin hãy biểu diễn trừ tà\Ntrực tiếp trên sóng truyền hình.
Dialogue: 0,0:21:38.92,0:21:43.22,Default,,0,0,0,,{\i1}Chà, nếu có thể tiêu diệt linh hồn\Ntrên chương trình truyền hình quốc gia,{\i}
