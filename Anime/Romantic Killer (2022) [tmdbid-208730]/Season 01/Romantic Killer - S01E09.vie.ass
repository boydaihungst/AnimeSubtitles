Dialogue: 0,0:00:09.01,0:00:11.93,Default,,0,0,0,,LOẠT PHIM NETFLIX
Dialogue: 0,0:00:12.01,0:00:13.93,Default,,0,0,0,,- Hẹn gặp lại.\N- Tạm biệt.
Dialogue: 0,0:00:18.35,0:00:19.77,Default,,0,0,0,,{\i1}Là Junta.{\i0}
Dialogue: 0,0:00:19.85,0:00:21.69,Default,,0,0,0,,{\i1}Vẫn chăm chỉ như mọi khi.{\i0}
Dialogue: 0,0:00:22.52,0:00:24.77,Default,,0,0,0,,{\i1}Mình nên ghé qua xem cậu ấy tập.{\i0}
Dialogue: 0,0:00:25.48,0:00:27.19,Default,,0,0,0,,{\i1}Không, đợi đã.{\i0}
Dialogue: 0,0:00:27.28,0:00:28.95,Default,,0,0,0,,{\i1}Mình không thể đến gần cậu ấy.{\i0}
Dialogue: 0,0:00:29.03,0:00:32.45,Default,,0,0,0,,{\i1}Mình cần tránh mọi tình huống\Nmà Riri có thể xen vào.{\i0}
Dialogue: 0,0:00:32.53,0:00:34.03,Default,,0,0,0,,{\i1}Cậu ổn chứ?{\i0}
Dialogue: 0,0:00:34.12,0:00:36.20,Default,,0,0,0,,{\i1}Mình có thể mất mạng đấy!{\i0}
Dialogue: 0,0:02:10.05,0:02:13.05,Default,,0,0,0,,{\an8}#9 SODA GỪNG LÚC NÀO CŨNG VẬY ĐẤY
Dialogue: 0,0:02:13.76,0:02:15.18,Default,,0,0,0,,{\i1}Nghĩ lại thì,{\i0}
Dialogue: 0,0:02:15.76,0:02:18.72,Default,,0,0,0,,{\i1}bạn quản lý câu lạc bộ bóng chày đó\Ndễ thương thật.{\i0}
Dialogue: 0,0:02:19.47,0:02:22.60,Default,,0,0,0,,{\i1}Nếu không bị Riri yểm bùa,{\i0}
Dialogue: 0,0:02:22.68,0:02:25.27,Default,,0,0,0,,{\i1}chắc Junta sẽ yêu một cô gái như thế.{\i0}
Dialogue: 0,0:02:25.98,0:02:29.86,Default,,0,0,0,,{\i1}Thật có lỗi vì đã lôi\Ncậu ấy vào cuộc đời mình.{\i0}
Dialogue: 0,0:02:30.36,0:02:32.90,Default,,0,0,0,,- Đây.\N{\i1}- Cửa bên phải đang đóng.{\i0}
Dialogue: 0,0:02:32.99,0:02:34.45,Default,,0,0,0,,{\i1}Xin hãy cẩn thận.{\i0}
Dialogue: 0,0:02:35.49,0:02:36.78,Default,,0,0,0,,Anzu đấy à?
Dialogue: 0,0:02:39.24,0:02:40.87,Default,,0,0,0,,Đúng rồi này.
Dialogue: 0,0:02:40.95,0:02:42.66,Default,,0,0,0,,Riporin! Amin!
Dialogue: 0,0:02:42.75,0:02:44.87,Default,,0,0,0,,Lâu rồi không gặp! Vẫn khỏe chứ?
Dialogue: 0,0:02:45.46,0:02:48.00,Default,,0,0,0,,Bọn tớ định tổ chức một buổi họp lớp.
Dialogue: 0,0:02:48.08,0:02:49.46,Default,,0,0,0,,Ý hay đó!
Dialogue: 0,0:02:49.54,0:02:51.75,Default,,0,0,0,,Sẽ vui hơn nếu rủ được\Nnhững bạn ta còn liên lạc.
Dialogue: 0,0:02:51.84,0:02:54.30,Default,,0,0,0,,Giờ cậu có thời gian không? Đi ăn gì đi.
Dialogue: 0,0:02:54.38,0:02:56.22,Default,,0,0,0,,Được đó, đi thôi!
Dialogue: 0,0:02:56.30,0:02:57.30,Default,,0,0,0,,Chỗ nào được nhỉ?
Dialogue: 0,0:02:57.39,0:02:59.22,Default,,0,0,0,,Zarigaria thì sao?
Dialogue: 0,0:03:00.64,0:03:03.77,Default,,0,0,0,,{\i1}Tớ vẫn chưa gặp Amin\Nkể từ khi tốt nghiệp cấp một.{\i0}
Dialogue: 0,0:03:03.85,0:03:06.35,Default,,0,0,0,,Riporin thì có tình cờ gặp ở ga tàu.
Dialogue: 0,0:03:06.44,0:03:08.52,Default,,0,0,0,,Lần đó cũng lâu lắm rồi.
Dialogue: 0,0:03:08.61,0:03:13.32,Default,,0,0,0,,Cậu không có điện thoại\Nnên chúng ta không thể trao đổi số.
Dialogue: 0,0:03:13.40,0:03:15.40,Default,,0,0,0,,Tớ chơi game quá nhiều,
Dialogue: 0,0:03:15.49,0:03:17.82,Default,,0,0,0,,nên mãi đến khi lớn hơn\Nmới được dùng điện thoại.
Dialogue: 0,0:03:17.91,0:03:19.12,Default,,0,0,0,,Cậu chẳng thay đổi gì cả.
Dialogue: 0,0:03:19.20,0:03:22.87,Default,,0,0,0,,Cậu toàn chơi game với đám con trai.
Dialogue: 0,0:03:22.95,0:03:25.83,Default,,0,0,0,,Ừ. Cậu còn từng chơi mấy trò nặng đô nữa.
Dialogue: 0,0:03:26.41,0:03:27.83,Default,,0,0,0,,Ý cậu là {\i1}Người Hùng Mèo{\i0} à.
Dialogue: 0,0:03:28.42,0:03:31.59,Default,,0,0,0,,{\i1}Ban đầu, chỉ có Tonta và tớ chơi trò đó.{\i0}
Dialogue: 0,0:03:31.67,0:03:32.88,Default,,0,0,0,,Tonta?
Dialogue: 0,0:03:32.96,0:03:34.59,Default,,0,0,0,,Ồ, hình như tớ nhớ ra rồi.
Dialogue: 0,0:03:34.67,0:03:37.05,Default,,0,0,0,,Cậu bé mũm mĩm có tóc xoăn ấy.
Dialogue: 0,0:03:37.13,0:03:40.09,Default,,0,0,0,,Tớ không nhớ lắm. Cậu ấy họ gì?
Dialogue: 0,0:03:40.18,0:03:42.01,Default,,0,0,0,,Họ sao?
Dialogue: 0,0:03:42.60,0:03:46.10,Default,,0,0,0,,Tonta họ…
Dialogue: 0,0:03:46.68,0:03:48.90,Default,,0,0,0,,Cậu không nhớ họ của cậu ấy à?
Dialogue: 0,0:03:50.19,0:03:52.90,Default,,0,0,0,,Họ của cậu ấy kết thúc bằng "-mi".
Dialogue: 0,0:03:53.61,0:03:56.36,Default,,0,0,0,,Để xem nào… À, nhớ rồi.
Dialogue: 0,0:03:56.44,0:03:57.82,Default,,0,0,0,,Tên đầy đủ là Hayami Junta.
Dialogue: 0,0:03:58.32,0:03:59.36,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:04:00.74,0:04:03.95,Default,,0,0,0,,{\i1}Cái gì cơ?{\i0}
Dialogue: 0,0:04:04.45,0:04:07.37,Default,,0,0,0,,Đúng vậy, cậu ấy là Hayami Junta!
Dialogue: 0,0:04:07.46,0:04:09.67,Default,,0,0,0,,Không biết giờ cậu ấy sao rồi.
Dialogue: 0,0:04:09.75,0:04:10.83,Default,,0,0,0,,Hayami?
Dialogue: 0,0:04:10.92,0:04:13.38,Default,,0,0,0,,Tớ vẫn chưa nhớ ra cậu ấy.
Dialogue: 0,0:04:14.34,0:04:17.42,Default,,0,0,0,,Đó là thú bông phiên bản giới hạn\Ncủa {\i1}Người Hùng Mèo{\i0}!
Dialogue: 0,0:04:17.97,0:04:19.59,Default,,0,0,0,,Cậu có chơi trò này không?
Dialogue: 0,0:04:19.68,0:04:20.97,Default,,0,0,0,,Có.
Dialogue: 0,0:04:21.05,0:04:23.89,Default,,0,0,0,,Thật sao! Cùng chơi đi!
Dialogue: 0,0:04:24.72,0:04:26.43,Default,,0,0,0,,Ryuya không chơi trò này,
Dialogue: 0,0:04:26.52,0:04:29.02,Default,,0,0,0,,nên tớ chưa có bạn chơi cùng.
Dialogue: 0,0:04:29.60,0:04:30.85,Default,,0,0,0,,Đến nhà tớ chơi đi!
Dialogue: 0,0:04:30.94,0:04:32.56,Default,,0,0,0,,Ở nhà cậu sao, Hoshino?
Dialogue: 0,0:04:32.65,0:04:33.90,Default,,0,0,0,,Cứ gọi tớ là Anzu.
Dialogue: 0,0:04:34.65,0:04:36.40,Default,,0,0,0,,Vậy thì Anzu.
Dialogue: 0,0:04:36.48,0:04:38.49,Default,,0,0,0,,Ừ, cứ gọi tớ bằng tên.
Dialogue: 0,0:04:40.66,0:04:41.91,Default,,0,0,0,,{\i1}Vậy cậu bạn Tonta đó… {\i0}
Dialogue: 0,0:04:42.70,0:04:46.62,Default,,0,0,0,,{\i1}- là Junta sao?{\i0}\N- Cậu tạo dáng như một chỉ huy vậy.
Dialogue: 0,0:04:46.70,0:04:48.29,Default,,0,0,0,,Cậu bị đau bụng à?
Dialogue: 0,0:04:48.87,0:04:52.25,Default,,0,0,0,,Tớ chỉ đang chết lặng\Ntrước sự ngu ngốc của mình thôi.
Dialogue: 0,0:04:52.33,0:04:53.79,Default,,0,0,0,,- Sao thế?\N- Sao thế?
Dialogue: 0,0:04:54.63,0:04:57.80,Default,,0,0,0,,{\i1}Tonta không phải tên thật.{\i0}
Dialogue: 0,0:04:57.88,0:05:01.05,Default,,0,0,0,,{\i1}Nghĩ lại thì tất nhiên là không phải rồi.{\i0}
Dialogue: 0,0:05:01.80,0:05:05.01,Default,,0,0,0,,{\i1}Sao mình không quan tâm đến\Ntên thật của cậu ấy nhỉ?{\i0}
Dialogue: 0,0:05:05.10,0:05:07.27,Default,,0,0,0,,{\i1}Cậu ấy có phải bạn bè qua mạng đâu!{\i0}
Dialogue: 0,0:05:07.35,0:05:08.64,Default,,0,0,0,,Hayami.
Dialogue: 0,0:05:08.73,0:05:09.56,Default,,0,0,0,,Vâng.
Dialogue: 0,0:05:10.23,0:05:13.23,Default,,0,0,0,,{\i1}Không, Junta đã thay đổi quá nhiều.{\i0}
Dialogue: 0,0:05:13.31,0:05:15.23,Default,,0,0,0,,{\i1}Trông họ khác nhau hoàn toàn.{\i0}
Dialogue: 0,0:05:15.90,0:05:17.07,Default,,0,0,0,,- Anzu?\N- Anzu?
Dialogue: 0,0:05:17.73,0:05:22.16,Default,,0,0,0,,Tonta, à quên, Junta, học ở trường tớ.
Dialogue: 0,0:05:22.24,0:05:23.78,Default,,0,0,0,,Thật sao?
Dialogue: 0,0:05:23.87,0:05:26.53,Default,,0,0,0,,Vì trầm lặng quá\Nnên cậu quên mất sự tồn tại của cậu ấy à?
Dialogue: 0,0:05:26.62,0:05:29.79,Default,,0,0,0,,Không, cậu ấy dậy thì thành công rồi.
Dialogue: 0,0:05:29.87,0:05:32.46,Default,,0,0,0,,Cứ như sinh vật phù du\Nđã phát triển thành voi vậy.
Dialogue: 0,0:05:32.54,0:05:34.63,Default,,0,0,0,,Giờ cậu ấy là một sinh vật hoàn toàn khác.
Dialogue: 0,0:05:35.21,0:05:37.25,Default,,0,0,0,,Chà, muốn gặp cậu ấy ngay quá.
Dialogue: 0,0:05:37.34,0:05:38.76,Default,,0,0,0,,Ừ, tớ cũng muốn gặp.
Dialogue: 0,0:05:38.84,0:05:40.47,Default,,0,0,0,,- Có được không?\N- Có được không?
Dialogue: 0,0:05:41.17,0:05:43.05,Default,,0,0,0,,Tớ có thể hỏi thử xem sao.
Dialogue: 0,0:05:43.13,0:05:45.34,Default,,0,0,0,,Mà chắc cậu ấy tập mệt rồi.
Dialogue: 0,0:05:51.02,0:05:52.27,Default,,0,0,0,,Chào buổi tối.
Dialogue: 0,0:05:54.85,0:05:56.19,Default,,0,0,0,,Ai vậy trời?
Dialogue: 0,0:05:56.27,0:05:58.32,Default,,0,0,0,,Cứ như một sinh vật hoàn toàn khác ấy!
Dialogue: 0,0:05:58.40,0:06:01.03,Default,,0,0,0,,Hai cậu này, nói nhỏ thôi.
Dialogue: 0,0:06:01.11,0:06:03.40,Default,,0,0,0,,Giờ Tonta đó chơi thể thao rồi!
Dialogue: 0,0:06:03.49,0:06:05.20,Default,,0,0,0,,Hơn nữa, cậu ấy còn đẹp trai!
Dialogue: 0,0:06:05.28,0:06:08.03,Default,,0,0,0,,Mái tóc xoăn đặc trưng của cậu đâu rồi?
Dialogue: 0,0:06:08.12,0:06:10.29,Default,,0,0,0,,Tóc tớ xoăn mỗi khi dài.
Dialogue: 0,0:06:10.37,0:06:13.46,Default,,0,0,0,,Hai cậu là Saeki và Igawa à?
Dialogue: 0,0:06:13.54,0:06:14.71,Default,,0,0,0,,- Cứ gọi Riporin.\N- Amin.
Dialogue: 0,0:06:14.79,0:06:15.88,Default,,0,0,0,,- Làm ơn!\N- Làm ơn!
Dialogue: 0,0:06:15.96,0:06:18.13,Default,,0,0,0,,Thật ra tớ thích thế hơn.
Dialogue: 0,0:06:18.63,0:06:21.30,Default,,0,0,0,,Tớ định tổ chức một buổi họp lớp.
Dialogue: 0,0:06:21.38,0:06:22.47,Default,,0,0,0,,Cậu sẽ đến chứ?
Dialogue: 0,0:06:22.55,0:06:24.26,Default,,0,0,0,,Họp lớp?
Dialogue: 0,0:06:24.93,0:06:26.55,Default,,0,0,0,,Anzu có đi không?
Dialogue: 0,0:06:27.14,0:06:28.81,Default,,0,0,0,,Tớ định đi.
Dialogue: 0,0:06:28.89,0:06:31.27,Default,,0,0,0,,Tớ muốn xem mặt mọi người\Nkhi họ phát hiện ra!
Dialogue: 0,0:06:31.35,0:06:36.15,Default,,0,0,0,,Tonta chậm chạp… à không, Junta,\Nđã lớn lên thành một vận động viên.
Dialogue: 0,0:06:36.23,0:06:37.86,Default,,0,0,0,,Phải cập nhật tình hình chứ.
Dialogue: 0,0:06:38.86,0:06:40.98,Default,,0,0,0,,Nếu Anzu đi thì có lẽ tớ sẽ đi.
Dialogue: 0,0:06:41.07,0:06:43.78,Default,,0,0,0,,Hôm đó tớ có trận đấu\Nnên có thể sẽ đến muộn.
Dialogue: 0,0:06:43.86,0:06:44.90,Default,,0,0,0,,Được!
Dialogue: 0,0:06:44.99,0:06:46.53,Default,,0,0,0,,Háo hức quá!
Dialogue: 0,0:06:46.61,0:06:49.16,Default,,0,0,0,,Cậu chắc là đi được chứ? Cậu bận mà.
Dialogue: 0,0:06:49.74,0:06:50.99,Default,,0,0,0,,Ừ, đừng lo.
Dialogue: 0,0:06:51.58,0:06:54.83,Default,,0,0,0,,Nhưng cậu còn tập thêm ở nhà\Nsau khi tập xong với đội mà.
Dialogue: 0,0:06:54.91,0:06:57.00,Default,,0,0,0,,Lại phải đón tớ đi làm về nữa.
Dialogue: 0,0:06:57.08,0:06:59.75,Default,,0,0,0,,Hai cậu hẹn hò được bao lâu rồi?
Dialogue: 0,0:06:59.84,0:07:00.88,Default,,0,0,0,,- Hả?\N- Hả?
Dialogue: 0,0:07:00.96,0:07:03.42,Default,,0,0,0,,Không! Không phải thế!
Dialogue: 0,0:07:03.51,0:07:05.84,Default,,0,0,0,,Hai cậu là một cặp trời sinh đấy.
Dialogue: 0,0:07:05.93,0:07:08.43,Default,,0,0,0,,Ừ, Anzu chọn đúng người rồi đấy.
Dialogue: 0,0:07:08.51,0:07:11.18,Default,,0,0,0,,- Cậu điên rồi à?\N- Nhỏ tiếng thôi.
Dialogue: 0,0:07:14.56,0:07:19.15,Default,,0,0,0,,{\i1}Mình không nhận ra Junta thật sự là\Nbạn thời thơ ấu của mình, Tonta.{\i0}
Dialogue: 0,0:07:19.86,0:07:21.44,Default,,0,0,0,,{\i1}Vậy có nghĩa là{\i0}
Dialogue: 0,0:07:21.52,0:07:24.94,Default,,0,0,0,,{\i1}cậu ấy thật sự thích mình ư?{\i0}
Dialogue: 0,0:07:25.03,0:07:29.53,Default,,0,0,0,,Cậu ấy đã thích thầm cậu từ hồi tiểu học!
Dialogue: 0,0:07:29.62,0:07:30.91,Default,,0,0,0,,Đừng làm thế với cậu ấy!
Dialogue: 0,0:07:31.66,0:07:33.16,Default,,0,0,0,,{\i1}Giờ mình đã biết… {\i0}
Dialogue: 0,0:07:34.33,0:07:35.16,Default,,0,0,0,,Hả?
Dialogue: 0,0:07:40.54,0:07:43.46,Default,,0,0,0,,Tớ muốn đào một cái hố\Nvà đếm trứng trước khi trứng nở.
Dialogue: 0,0:07:43.96,0:07:46.72,Default,,0,0,0,,Cậu đã kết hợp hai thành ngữ đó.
Dialogue: 0,0:07:46.80,0:07:47.80,Default,,0,0,0,,Sao thế?
Dialogue: 0,0:07:51.72,0:07:52.72,Default,,0,0,0,,Ôi trời.
Dialogue: 0,0:07:54.22,0:07:55.43,Default,,0,0,0,,Tèn ten!
Dialogue: 0,0:07:56.02,0:07:59.52,Default,,0,0,0,,Hóng buổi họp lớp quá đi!
Dialogue: 0,0:07:59.60,0:08:01.56,Default,,0,0,0,,Cậu không thể mặc đồ mèo bình thường được!
Dialogue: 0,0:08:01.65,0:08:03.94,Default,,0,0,0,,Tớ sẽ chọn trang phục cho cậu!
Dialogue: 0,0:08:07.57,0:08:08.82,Default,,0,0,0,,Cậu lại định giở trò gì?
Dialogue: 0,0:08:08.91,0:08:10.95,Default,,0,0,0,,Ơ, chuyện này là sao?
Dialogue: 0,0:08:12.28,0:08:14.20,Default,,0,0,0,,Junta là Tonta!
Dialogue: 0,0:08:14.29,0:08:17.41,Default,,0,0,0,,Không phải bạn thời thơ ấu giả mạo\Ndo cậu tạo ra.
Dialogue: 0,0:08:17.91,0:08:19.96,Default,,0,0,0,,- Anzu, cậu là đồ ngốc.\N- Cái gì?
Dialogue: 0,0:08:20.04,0:08:23.46,Default,,0,0,0,,Tớ chưa từng nói\Ntớ sẽ thao túng bất cứ ai.
Dialogue: 0,0:08:24.42,0:08:28.47,Default,,0,0,0,,Anzu, cậu không nhận ra\NJunta đã thay đổi thế nào.
Dialogue: 0,0:08:29.09,0:08:33.30,Default,,0,0,0,,Tôi tưởng cậu đã yểm bùa để Junta yêu tôi.
Dialogue: 0,0:08:33.39,0:08:35.97,Default,,0,0,0,,Làm gì có,\Ncảm xúc của cậu ấy là của riêng cậu ấy.
Dialogue: 0,0:08:36.56,0:08:38.56,Default,,0,0,0,,Cảm xúc của Junta không đến từ phép thuật.
Dialogue: 0,0:08:38.64,0:08:40.98,Default,,0,0,0,,- Cậu ấy đơn giản là yêu cậu thôi.\N- Cái gì?
Dialogue: 0,0:08:41.06,0:08:46.19,Default,,0,0,0,,{\i1}Phù thủy bọn tớ\Nkhông được phép thao túng cảm xúc.{\i0}
Dialogue: 0,0:08:46.28,0:08:49.40,Default,,0,0,0,,{\i1}Nếu được, tớ đã yểm bùa cậu trước rồi.{\i0}
Dialogue: 0,0:08:50.57,0:08:51.53,Default,,0,0,0,,Cũng phải.
Dialogue: 0,0:08:51.61,0:08:55.49,Default,,0,0,0,,Tớ chỉ giúp hai cậu đoàn tụ\Nsớm hơn đã định.
Dialogue: 0,0:08:55.58,0:08:57.25,Default,,0,0,0,,- Ý cậu là sao?\N- Nghe này.
Dialogue: 0,0:08:57.83,0:09:00.25,Default,,0,0,0,,{\i1}Ví dụ, sau lễ chào mừng học sinh mới,{\i0}
Dialogue: 0,0:09:00.33,0:09:03.08,Default,,0,0,0,,{\i1}Junta tìm thấy cậu\Nvà cố bắt chuyện với cậu.{\i0}
Dialogue: 0,0:09:03.17,0:09:04.38,Default,,0,0,0,,{\i1}Thật sao?{\i0}
Dialogue: 0,0:09:04.46,0:09:06.34,Default,,0,0,0,,Cảm ơn con đã đợi, Anzu.
Dialogue: 0,0:09:07.59,0:09:10.05,Default,,0,0,0,,{\i1}Nhưng cậu đã làm gì?{\i0}
Dialogue: 0,0:09:10.13,0:09:12.55,Default,,0,0,0,,{\i1}Tôi không biết, tôi đã làm gì?{\i0}
Dialogue: 0,0:09:13.09,0:09:16.14,Default,,0,0,0,,Đi ăn trưa trước khi về nhé.
Dialogue: 0,0:09:16.22,0:09:19.39,Default,,0,0,0,,À! Mình cần thần chú hồi sinh\Nđể vượt cấp đó.
Dialogue: 0,0:09:19.48,0:09:21.27,Default,,0,0,0,,Ta về nhà thôi ạ.
Dialogue: 0,0:09:21.35,0:09:24.81,Default,,0,0,0,,Hả? Còn bữa trưa thì sao?
Dialogue: 0,0:09:24.90,0:09:28.28,Default,,0,0,0,,- Con sắp qua màn game rồi.\N- Con chỉ nghĩ được có thế thôi à?
Dialogue: 0,0:09:30.28,0:09:31.28,Default,,0,0,0,,Ôi chà.
Dialogue: 0,0:09:32.66,0:09:35.83,Default,,0,0,0,,Tôi muốn qua màn game nên đã về nhà ngay.
Dialogue: 0,0:09:35.91,0:09:36.91,Default,,0,0,0,,Đó là vấn đề.
Dialogue: 0,0:09:36.99,0:09:41.12,Default,,0,0,0,,Cậu đã ngu ngốc\Nvà hoàn toàn phớt lờ Junta.
Dialogue: 0,0:09:41.71,0:09:43.58,Default,,0,0,0,,Cậu làm thế nhiều lần rồi.
Dialogue: 0,0:09:43.67,0:09:48.59,Default,,0,0,0,,{\i1}Mỗi ngày, ngay khi tan học,\Ncậu chạy về nhà chơi điện tử{\i0}
Dialogue: 0,0:09:49.96,0:09:53.47,Default,,0,0,0,,{\i1}như thể cố phá kỷ lục\Nhọc sinh về nhà nhanh nhất vậy.{\i0}
Dialogue: 0,0:09:55.18,0:09:57.97,Default,,0,0,0,,{\i1}Trong khi đó, Junta quá bận tập bóng chày{\i0}
Dialogue: 0,0:09:58.06,0:10:00.60,Default,,0,0,0,,{\i1}và không thể nói chuyện với cậu.{\i0}
Dialogue: 0,0:10:03.73,0:10:05.15,Default,,0,0,0,,{\i1}Năm 1, tập hợp!{\i0}
Dialogue: 0,0:10:08.69,0:10:12.57,Default,,0,0,0,,Bực mình quá,\Nnên tớ đã cắt hết mấy đoạn râu ria.
Dialogue: 0,0:10:12.65,0:10:13.74,Default,,0,0,0,,{\i1}Đừng có cắt!{\i0}
Dialogue: 0,0:10:15.70,0:10:18.45,Default,,0,0,0,,Tất cả là vì\Nđời sống tình cảm của Anzu thôi.
Dialogue: 0,0:10:18.53,0:10:20.12,Default,,0,0,0,,Lẽ ra cậu nên để tôi yên.
Dialogue: 0,0:10:20.20,0:10:23.62,Default,,0,0,0,,Sao cũng được, trả đồ cho tôi đi!
Dialogue: 0,0:10:23.71,0:10:25.37,Default,,0,0,0,,Trả lại đây!
Dialogue: 0,0:10:25.46,0:10:31.71,Default,,0,0,0,,Nếu tớ không tịch thu mấy thứ đó,\Nđời cậu sẽ chẳng còn lãng mạn!
Dialogue: 0,0:10:31.80,0:10:34.38,Default,,0,0,0,,Tớ bỏ cuộc!
Dialogue: 0,0:10:35.09,0:10:38.30,Default,,0,0,0,,Tôi không thể tận hưởng sự lãng mạn\Nkhi thiếu đi những thứ tôi thích!
Dialogue: 0,0:10:38.39,0:10:41.06,Default,,0,0,0,,Hãy nhớ, cậu là phi nữ chính.
Dialogue: 0,0:10:41.14,0:10:42.06,Default,,0,0,0,,À…
Dialogue: 0,0:10:42.14,0:10:45.19,Default,,0,0,0,,{\i1}Một người như cậu phải bị ép buộc,{\i0}
Dialogue: 0,0:10:45.27,0:10:48.31,Default,,0,0,0,,{\i1}hoặc cậu sẽ không bao giờ\Nnhận ra mình đang bỏ lỡ điều gì{\i0}
Dialogue: 0,0:10:51.53,0:10:53.57,Default,,0,0,0,,{\i1}- cho đến khi chết!\N- Ăn nói cho cẩn thận!{\i0}
Dialogue: 0,0:10:53.65,0:10:57.16,Default,,0,0,0,,Khoan đã, sao cậu lại đối xử với tôi\Nnhư thể tôi là ngoại lệ vậy?
Dialogue: 0,0:10:57.74,0:11:00.49,Default,,0,0,0,,Saki đâu có quan tâm đến chuyện tình cảm.
Dialogue: 0,0:11:00.58,0:11:04.16,Default,,0,0,0,,{\i1}- Saki rất được các chàng trai yêu thích.{\i0}\N- Saki!
Dialogue: 0,0:11:05.21,0:11:07.25,Default,,0,0,0,,{\i1}Hẹn hò đi!{\i0}
Dialogue: 0,0:11:07.33,0:11:09.13,Default,,0,0,0,,{\i1}Không cần phải giúp.{\i0}
Dialogue: 0,0:11:09.21,0:11:10.25,Default,,0,0,0,,YÊU\NSAKI YÊU DẤU
Dialogue: 0,0:11:11.50,0:11:12.42,Default,,0,0,0,,Xin lỗi.
Dialogue: 0,0:11:12.51,0:11:15.01,Default,,0,0,0,,Tôi không nên nói như thể\Nmình cùng đẳng cấp với cậu ấy.
Dialogue: 0,0:11:15.09,0:11:17.01,Default,,0,0,0,,Giờ cậu đã hiểu chưa?
Dialogue: 0,0:11:17.97,0:11:19.35,Default,,0,0,0,,Mục đích của Kế Hoạch Lãng Mạn
Dialogue: 0,0:11:19.43,0:11:24.77,Default,,0,0,0,,là làm cho đời sống tình cảm của cậu\Nquan trọng hơn ba thứ cậu yêu thích.
Dialogue: 0,0:11:26.23,0:11:28.44,Default,,0,0,0,,Tôi không quan tâm\Nkế hoạch vớ vẩn của cậu.
Dialogue: 0,0:11:29.65,0:11:35.11,Default,,0,0,0,,Dù sao, Junta có là Tonta cũng không thể\Nthay thế sự thật cả hai chỉ là bạn.
Dialogue: 0,0:11:41.62,0:11:43.74,Default,,0,0,0,,Ra ngoài!
Dialogue: 0,0:11:43.83,0:11:45.87,Default,,0,0,0,,Giờ cậu quan tâm rồi à?
Dialogue: 0,0:11:50.75,0:11:53.59,Default,,0,0,0,,Ơ… Tonta đâu?
Dialogue: 0,0:11:53.67,0:11:56.05,Default,,0,0,0,,- Về rồi.\N- Vậy sao?
Dialogue: 0,0:11:56.63,0:11:58.84,Default,,0,0,0,,Tớ muốn chơi game với cậu ấy.
Dialogue: 0,0:11:58.93,0:12:01.68,Default,,0,0,0,,Cậu ta chán chơi {\i1}Người Hùng Mèo{\i0} rồi.
Dialogue: 0,0:12:01.76,0:12:02.85,Default,,0,0,0,,Không thể nào.
Dialogue: 0,0:12:02.93,0:12:05.64,Default,,0,0,0,,Bọn tớ còn định cùng nhau\Nđạt điểm cao cơ mà.
Dialogue: 0,0:12:05.72,0:12:07.44,Default,,0,0,0,,Ta có thể đạt điểm cao nhất mà.
Dialogue: 0,0:12:07.52,0:12:08.35,Default,,0,0,0,,Phải!
Dialogue: 0,0:12:09.23,0:12:11.73,Default,,0,0,0,,Lúc đầu cậu đâu có quan tâm đến trò này.
Dialogue: 0,0:12:11.81,0:12:14.23,Default,,0,0,0,,Không đúng.
Dialogue: 0,0:12:17.78,0:12:20.11,Default,,0,0,0,,Cậu nói Anzu cũng đến à?
Dialogue: 0,0:12:20.20,0:12:22.70,Default,,0,0,0,,Anzu à? Ừ, cậu ấy đang đến.
Dialogue: 0,0:12:22.78,0:12:25.04,Default,,0,0,0,,Ryuya, cậu không gặp cậu ấy\Ntừ hồi tốt nghiệp nhỉ?
Dialogue: 0,0:12:25.12,0:12:26.04,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:12:26.12,0:12:29.04,Default,,0,0,0,,Cá là cậu ấy sẽ xuất hiện\Ncùng đống họa tiết mèo xấu xí.
Dialogue: 0,0:12:29.12,0:12:31.54,Default,,0,0,0,,Mèo thì có vấn đề gì?
Dialogue: 0,0:12:31.63,0:12:33.04,Default,,0,0,0,,Anzu!
Dialogue: 0,0:12:33.92,0:12:36.92,Default,,0,0,0,,Anzu, cậu ăn mặc tử tế đấy!
Dialogue: 0,0:12:37.01,0:12:39.09,Default,,0,0,0,,Làm tốt lắm.
Dialogue: 0,0:12:40.09,0:12:43.18,Default,,0,0,0,,Chà, Anzu ăn mặc đẹp thật.
Dialogue: 0,0:12:43.26,0:12:44.81,Default,,0,0,0,,Cậu ấy không luộm thuộm.
Dialogue: 0,0:12:44.89,0:12:47.10,Default,,0,0,0,,Xin lỗi vì đã làm các cậu thất vọng.
Dialogue: 0,0:12:47.77,0:12:49.14,Default,,0,0,0,,{\i1}Tất cả là nhờ hai người họ.{\i0}
Dialogue: 0,0:12:49.23,0:12:53.86,Default,,0,0,0,,- Tôi cần đi tè! Để tôi đi tè!\N- Đứng yên nào!
Dialogue: 0,0:12:53.94,0:12:56.65,Default,,0,0,0,,Vẫn còn mác này.
Dialogue: 0,0:12:56.73,0:13:01.20,Default,,0,0,0,,Đừng tỏ ra hơn người\Nchỉ vì cậu thay đổi một chút.
Dialogue: 0,0:13:01.28,0:13:03.82,Default,,0,0,0,,Ryuya, cậu chẳng thay đổi gì nhiều,
Dialogue: 0,0:13:03.91,0:13:04.99,Default,,0,0,0,,nhất là về chiều cao.
Dialogue: 0,0:13:05.08,0:13:07.20,Default,,0,0,0,,Tớ vẫn đang tuổi lớn.
Dialogue: 0,0:13:07.29,0:13:09.62,Default,,0,0,0,,Do cậu cao quá thôi!
Dialogue: 0,0:13:10.96,0:13:13.21,Default,,0,0,0,,Hãy chơi trò con trai đấu với con gái.
Dialogue: 0,0:13:13.71,0:13:16.13,Default,,0,0,0,,Đội có điểm cao nhất sẽ thắng.
Dialogue: 0,0:13:16.63,0:13:19.51,Default,,0,0,0,,Nhiều bạn nữ hơn,\Nnên đó là cách tốt để cân bằng trận đấu.
Dialogue: 0,0:13:20.13,0:13:22.09,Default,,0,0,0,,Nghe vui đấy.
Dialogue: 0,0:13:22.18,0:13:24.09,Default,,0,0,0,,Hình phạt cho đội thua là gì?
Dialogue: 0,0:13:24.18,0:13:25.80,Default,,0,0,0,,- Hả?\N- Hả?
Dialogue: 0,0:13:25.89,0:13:28.89,Default,,0,0,0,,Kẻ thua cuộc nói với mọi người\Ntên người đầu tiên họ thích nhé?
Dialogue: 0,0:13:29.73,0:13:32.60,Default,,0,0,0,,Hỏng rồi, mình chỉ nghĩ đến\Ncác nhân vật game thôi.
Dialogue: 0,0:13:32.69,0:13:34.90,Default,,0,0,0,,Khỏi cần nói cũng biết, Tóc Xù.
Dialogue: 0,0:13:35.48,0:13:37.36,Default,,0,0,0,,Làm sao đây?
Dialogue: 0,0:13:39.49,0:13:40.74,Default,,0,0,0,,Đừng lo.
Dialogue: 0,0:13:40.82,0:13:43.49,Default,,0,0,0,,Có tớ bên cạnh rồi.
Dialogue: 0,0:13:43.57,0:13:44.91,Default,,0,0,0,,- Tuyệt!\N- Tuyệt!
Dialogue: 0,0:13:45.78,0:13:48.79,Default,,0,0,0,,Có biết mình đang dấn thân\Nvào chuyện gì không?
Dialogue: 0,0:13:49.37,0:13:55.42,Default,,0,0,0,,Những con gà bại trận trong mọi ván game.\NTa sẽ cho ngươi biết nơi ngươi thuộc về!
Dialogue: 0,0:13:55.50,0:13:57.67,Default,,0,0,0,,- Anzu.\N- Ngầu quá!
Dialogue: 0,0:13:57.75,0:14:00.13,Default,,0,0,0,,Dù nghe không khác gì nhân vật phản diện!
Dialogue: 0,0:14:00.84,0:14:03.26,Default,,0,0,0,,Đừng nghĩ bọn tớ\Nvẫn gà mờ như hồi tiểu học!
Dialogue: 0,0:14:03.34,0:14:05.97,Default,,0,0,0,,Tớ sẽ cho cậu biết thế nào là lễ hội!
Dialogue: 0,0:14:06.05,0:14:07.14,Default,,0,0,0,,Là lễ độ.
Dialogue: 0,0:14:07.22,0:14:09.22,Default,,0,0,0,,{\an8}ĐỐI ĐẦU
Dialogue: 0,0:14:09.31,0:14:11.73,Default,,0,0,0,,- Cố lên, Anzu!\N- Cố lên!
Dialogue: 0,0:14:11.81,0:14:13.23,Default,,0,0,0,,{\i1}Họ không biết điều này.{\i0}
Dialogue: 0,0:14:13.81,0:14:15.60,Default,,0,0,0,,{\i1}Để thắng một ván bowling,{\i0}
Dialogue: 0,0:14:16.56,0:14:19.57,Default,,0,0,0,,{\i1}phải nắm rõ cách dầu được trải trên làn.{\i0}
Dialogue: 0,0:14:21.99,0:14:23.28,Default,,0,0,0,,{\i1}Giờ hãy hình dung đi.{\i0}
Dialogue: 0,0:14:25.03,0:14:26.95,Default,,0,0,0,,{\i1}Thêm một chút động lực nữa!{\i0}
Dialogue: 0,0:14:27.91,0:14:30.79,Default,,0,0,0,,{\i1}Ta sẽ cho ngươi xuống địa ngục!{\i0}
Dialogue: 0,0:14:33.83,0:14:34.75,Default,,0,0,0,,Gục!
Dialogue: 0,0:14:41.13,0:14:44.43,Default,,0,0,0,,{\i1}Mình đã tiêu diệt tất cả bọn chúng!{\i0}
Dialogue: 0,0:14:44.51,0:14:46.05,Default,,0,0,0,,ĐỘI ANZU CHIẾN THẮNG!
Dialogue: 0,0:14:46.14,0:14:49.47,Default,,0,0,0,,Như đã hứa, hãy nói tên\Nngười đầu tiên các cậu thích.
Dialogue: 0,0:14:50.06,0:14:51.68,Default,,0,0,0,,{\an8}TỚI ĐÂY
Dialogue: 0,0:14:51.77,0:14:53.14,Default,,0,0,0,,Quỳ xuống!
Dialogue: 0,0:14:53.23,0:14:54.81,Default,,0,0,0,,{\i1}Đâu có thỏa thuận này!{\i0}
Dialogue: 0,0:14:55.48,0:14:56.48,Default,,0,0,0,,Chịu thôi.
Dialogue: 0,0:14:56.56,0:14:59.15,Default,,0,0,0,,Tìm chỗ ngồi đã. Cậu bắt đầu đi.
Dialogue: 0,0:15:00.40,0:15:03.36,Default,,0,0,0,,Người đầu tiên tớ thích là Okawa.
Dialogue: 0,0:15:03.44,0:15:05.07,Default,,0,0,0,,- Chà.\N- Không thể nào!
Dialogue: 0,0:15:05.15,0:15:06.82,Default,,0,0,0,,Là Yoshida.
Dialogue: 0,0:15:06.91,0:15:08.20,Default,,0,0,0,,- Chà!\N- Ôi!
Dialogue: 0,0:15:08.28,0:15:10.66,Default,,0,0,0,,Tớ thích Amin.
Dialogue: 0,0:15:12.20,0:15:15.46,Default,,0,0,0,,Hả, tớ sao? Xin lỗi, nhưng không nhé.
Dialogue: 0,0:15:15.54,0:15:16.54,Default,,0,0,0,,Kết thúc rồi.
Dialogue: 0,0:15:17.75,0:15:19.54,Default,,0,0,0,,Đến lượt cậu kìa.
Dialogue: 0,0:15:20.96,0:15:22.96,Default,,0,0,0,,- Tớ thích…\N- Cậu ổn chứ, Yamaguchi?
Dialogue: 0,0:15:26.05,0:15:28.51,Default,,0,0,0,,{\i1}May mà Junta chưa đến.{\i0}
Dialogue: 0,0:15:28.59,0:15:30.22,Default,,0,0,0,,Tớ vẫn luôn thích cậu, Anzu.
Dialogue: 0,0:15:31.64,0:15:33.97,Default,,0,0,0,,- Yamaguchi!\N- Này!
Dialogue: 0,0:15:34.06,0:15:34.89,Default,,0,0,0,,Này!
Dialogue: 0,0:15:35.77,0:15:37.35,Default,,0,0,0,,Cô giáo mẫu giáo của tớ.
Dialogue: 0,0:15:37.98,0:15:39.98,Default,,0,0,0,,- Câu trả lời chán ngắt!\N- Câu trả lời chán ngắt!
Dialogue: 0,0:15:40.06,0:15:41.52,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:15:41.61,0:15:43.73,Default,,0,0,0,,Lần này bọn tớ sẽ không thua.\NThêm ván nữa đi!
Dialogue: 0,0:15:43.82,0:15:45.19,Default,,0,0,0,,Muốn chơi nữa à?
Dialogue: 0,0:15:45.28,0:15:47.45,Default,,0,0,0,,Yamaguchi đã hết máu!
Dialogue: 0,0:15:48.45,0:15:49.87,Default,,0,0,0,,Một trận đấu phục thù!
Dialogue: 0,0:15:49.95,0:15:52.62,Default,,0,0,0,,Ta sẽ cho họ thấy khả năng của mình!
Dialogue: 0,0:15:52.70,0:15:55.16,Default,,0,0,0,,Muốn thêm nhục thì tớ chiều.
Dialogue: 0,0:15:56.33,0:15:58.25,Default,,0,0,0,,- Chết tiệt.\N- Không biết nữa…
Dialogue: 0,0:15:58.83,0:16:01.04,Default,,0,0,0,,Ai thua phải mua kem nhé.
Dialogue: 0,0:16:01.13,0:16:03.80,Default,,0,0,0,,Chuyện tình đầu của các cậu chán òm.
Dialogue: 0,0:16:03.88,0:16:04.71,Default,,0,0,0,,Ôi không!
Dialogue: 0,0:16:05.30,0:16:08.01,Default,,0,0,0,,Máu của Yamaguchi xuống dưới 0 rồi!
Dialogue: 0,0:16:09.72,0:16:12.05,Default,,0,0,0,,- Đã cảnh báo rồi mà.\N- Chết tiệt!
Dialogue: 0,0:16:14.64,0:16:17.89,Default,,0,0,0,,Hoan hô! Tiếp theo là karaoke.
Dialogue: 0,0:16:19.52,0:16:22.02,Default,,0,0,0,,Anzu, chúng ta sẽ thi\Ngiành điểm cao nhất bằng ca hát!
Dialogue: 0,0:16:22.11,0:16:23.15,Default,,0,0,0,,Được.
Dialogue: 0,0:16:23.73,0:16:25.28,Default,,0,0,0,,Ryuya, hay là bỏ đi.
Dialogue: 0,0:16:25.36,0:16:26.82,Default,,0,0,0,,Cảm giác này.
Dialogue: 0,0:16:26.90,0:16:29.86,Default,,0,0,0,,Từ hồi tiểu học đến giờ\Nvẫn không thay đổi.
Dialogue: 0,0:16:29.95,0:16:33.37,Default,,0,0,0,,{\i1}Xin lỗi vì đã ép cậu{\i0}
Dialogue: 0,0:16:33.45,0:16:36.79,Default,,0,0,0,,{\i1}Nhưng tớ hứa cậu sẽ tận hưởng\NMột tương lai tuyệt vời{\i0}
Dialogue: 0,0:16:37.62,0:16:39.71,Default,,0,0,0,,{\an8}76,3 ĐIỂM
Dialogue: 0,0:16:39.79,0:16:41.75,Default,,0,0,0,,Được. Không tệ lắm.
Dialogue: 0,0:16:41.83,0:16:47.97,Default,,0,0,0,,{\i1}Tôi sẽ tự quyết định số phận của mình!{\i0}
Dialogue: 0,0:16:49.17,0:16:50.93,Default,,0,0,0,,{\an8}86,7 ĐIỂM
Dialogue: 0,0:16:51.51,0:16:54.43,Default,,0,0,0,,Cái gì? Đùa mình chắc.
Dialogue: 0,0:16:55.01,0:16:58.60,Default,,0,0,0,,{\i1}Cậu không thể né tránh!{\i0}
Dialogue: 0,0:16:58.68,0:17:00.19,Default,,0,0,0,,{\i1}Ôm lấy tớ, ôm thật chặt{\i0}
Dialogue: 0,0:17:00.27,0:17:01.69,Default,,0,0,0,,{\i1}Giải phóng phần hoang dại trong cậu{\i0}
Dialogue: 0,0:17:04.48,0:17:06.23,Default,,0,0,0,,Sao vẫn xụ mặt thế?
Dialogue: 0,0:17:07.78,0:17:10.32,Default,,0,0,0,,Đâu phải lần đầu cậu thua tớ đâu.
Dialogue: 0,0:17:10.40,0:17:12.74,Default,,0,0,0,,Bực mình quá đi mất!
Dialogue: 0,0:17:13.32,0:17:16.62,Default,,0,0,0,,Cậu không có quyền nói, đồ lừa tình.
Dialogue: 0,0:17:16.70,0:17:19.04,Default,,0,0,0,,Lừa dối phụ nữ? Không thể nào!
Dialogue: 0,0:17:19.12,0:17:20.79,Default,,0,0,0,,Đừng nói với cậu ấy!
Dialogue: 0,0:17:20.87,0:17:21.92,Default,,0,0,0,,- Nhưng đó là sự thật.\N- Nhưng đó là sự thật.
Dialogue: 0,0:17:23.17,0:17:24.04,Default,,0,0,0,,Thấy chưa?
Dialogue: 0,0:17:24.13,0:17:27.09,Default,,0,0,0,,Đừng dỗi nữa.\NHát một bài sôi động với Anzu đi.
Dialogue: 0,0:17:27.17,0:17:28.96,Default,,0,0,0,,Chắc tớ phải chủ động rồi.
Dialogue: 0,0:17:31.38,0:17:32.84,Default,,0,0,0,,Cậu muốn hát bài gì?
Dialogue: 0,0:17:33.72,0:17:35.35,Default,,0,0,0,,BẠN CÓ 1 TIN NHẮN MỚI
Dialogue: 0,0:17:37.93,0:17:39.98,Default,,0,0,0,,À, Junta vừa đến.
Dialogue: 0,0:17:40.06,0:17:41.27,Default,,0,0,0,,Tớ sẽ đi đón cậu ấy.
Dialogue: 0,0:17:42.90,0:17:45.19,Default,,0,0,0,,Junta là ai?
Dialogue: 0,0:17:45.27,0:17:46.27,Default,,0,0,0,,Là Tonta ấy.
Dialogue: 0,0:17:46.94,0:17:49.23,Default,,0,0,0,,À, tớ nhớ ra rồi.
Dialogue: 0,0:17:49.32,0:17:52.78,Default,,0,0,0,,Tớ tưởng cậu ấy chuyển đi rồi mà.
Dialogue: 0,0:17:52.86,0:17:54.28,Default,,0,0,0,,Cậu ấy về lại rồi.
Dialogue: 0,0:17:54.36,0:17:57.08,Default,,0,0,0,,Giờ cậu ấy\Nhọc cùng trường cấp ba với Anzu.
Dialogue: 0,0:17:57.16,0:17:58.58,Default,,0,0,0,,Hôm nay cậu ấy có trận đấu.
Dialogue: 0,0:17:58.66,0:18:00.00,Default,,0,0,0,,Trận đấu?
Dialogue: 0,0:18:00.08,0:18:03.17,Default,,0,0,0,,Cậu ấy đâu có giỏi thể thao nhỉ?
Dialogue: 0,0:18:03.75,0:18:05.29,Default,,0,0,0,,- Cậu sẽ thấy.\N- Cậu sẽ thấy.
Dialogue: 0,0:18:06.04,0:18:07.54,Default,,0,0,0,,Xin lỗi đã để mọi người chờ.
Dialogue: 0,0:18:08.84,0:18:11.05,Default,,0,0,0,,Hy vọng mọi người đang chơi vui.
Dialogue: 0,0:18:14.30,0:18:15.43,Default,,0,0,0,,- Tèn ten!\N- Tèn ten!
Dialogue: 0,0:18:15.51,0:18:18.31,Default,,0,0,0,,- Tonta đây.\N- Hayami Junta!
Dialogue: 0,0:18:19.39,0:18:21.02,Default,,0,0,0,,- Cái gì?\N- Cái gì?
Dialogue: 0,0:18:21.10,0:18:22.06,Default,,0,0,0,,CẬU ẤY LỚN RỒI!
Dialogue: 0,0:18:22.14,0:18:24.02,Default,,0,0,0,,- Tonta đó ư?\N- Tonta đó ư?
Dialogue: 0,0:18:24.56,0:18:26.27,Default,,0,0,0,,Giờ cậu ấy cao hơn nhiều rồi.
Dialogue: 0,0:18:26.36,0:18:28.48,Default,,0,0,0,,Cậu ấy vẫn luôn đẹp trai như vậy à?
Dialogue: 0,0:18:28.57,0:18:32.95,Default,,0,0,0,,Cậu là Hayami Junta\Ncủa đội bóng chày Trường Cấp ba Shukan à?
Dialogue: 0,0:18:33.03,0:18:34.40,Default,,0,0,0,,Ừ, là tớ.
Dialogue: 0,0:18:34.49,0:18:36.37,Default,,0,0,0,,Không thể nào, tuyệt quá!
Dialogue: 0,0:18:36.45,0:18:38.99,Default,,0,0,0,,Hôm nọ ở trận đấu,\Ncậu đã đánh đòn quyết định.
Dialogue: 0,0:18:39.08,0:18:41.87,Default,,0,0,0,,Tớ rất thích bóng chày trung học.
Dialogue: 0,0:18:41.95,0:18:45.04,Default,,0,0,0,,Đỉnh quá. Tonta ngày ấy\Nđã trở thành ngôi sao rồi!
Dialogue: 0,0:18:45.12,0:18:46.54,Default,,0,0,0,,Cho tớ xin chữ ký nhé?
Dialogue: 0,0:18:47.54,0:18:49.67,Default,,0,0,0,,Trông cậu hoàn toàn khác.
Dialogue: 0,0:18:49.75,0:18:51.46,Default,,0,0,0,,Cậu cao quá.
Dialogue: 0,0:18:51.55,0:18:53.05,Default,,0,0,0,,Cậu cao bao nhiêu thế?
Dialogue: 0,0:18:53.92,0:18:55.93,Default,,0,0,0,,Tớ cao 1,86m.
Dialogue: 0,0:18:56.01,0:18:58.18,Default,,0,0,0,,Chắc cậu nổi tiếng lắm.\NCậu có bạn gái chưa?
Dialogue: 0,0:18:58.26,0:19:00.18,Default,,0,0,0,,Cô ấy đây này.
Dialogue: 0,0:19:00.76,0:19:02.72,Default,,0,0,0,,Không phải!
Dialogue: 0,0:19:02.81,0:19:04.43,Default,,0,0,0,,Soda gừng cay quá!
Dialogue: 0,0:19:04.52,0:19:07.44,Default,,0,0,0,,- Bẩn quá!\N- Không phải đâu.
Dialogue: 0,0:19:07.52,0:19:10.11,Default,,0,0,0,,Nhưng tớ có thể thấy\Ncậu và Anzu đang gần nhau hơn.
Dialogue: 0,0:19:10.19,0:19:12.36,Default,,0,0,0,,Hai người lúc nào cũng hòa hợp với nhau.
Dialogue: 0,0:19:13.65,0:19:15.78,Default,,0,0,0,,Xem các cậu nịnh hót kìa.
Dialogue: 0,0:19:16.41,0:19:18.12,Default,,0,0,0,,Về phe cậu ta hết rồi à?
Dialogue: 0,0:19:19.45,0:19:22.62,Default,,0,0,0,,Tonta, chắc giờ cậu thấy\Nmình trên cơ bọn tớ lắm.
Dialogue: 0,0:19:22.70,0:19:24.75,Default,,0,0,0,,Thôi đi, Ryuya.
Dialogue: 0,0:19:25.33,0:19:28.21,Default,,0,0,0,,Cậu cao và giỏi thể thao.
Dialogue: 0,0:19:29.08,0:19:31.09,Default,,0,0,0,,Chưa kể cậu còn cao lên nữa.
Dialogue: 0,0:19:31.17,0:19:32.67,Default,,0,0,0,,Cậu nói câu đó hai lần rồi.
Dialogue: 0,0:19:33.42,0:19:36.55,Default,,0,0,0,,Cậu đến đây để khoe mẽ\Nmình là mỹ nam chứ gì.
Dialogue: 0,0:19:37.26,0:19:38.18,Default,,0,0,0,,Đợi đã.
Dialogue: 0,0:19:39.05,0:19:42.26,Default,,0,0,0,,Một người làm việc chăm chỉ\Nvà được khen ngợi thì có gì sai?
Dialogue: 0,0:19:42.35,0:19:43.27,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:19:43.35,0:19:47.06,Default,,0,0,0,,Và cậu ấy không thích thể hiện đâu.
Dialogue: 0,0:19:47.64,0:19:51.27,Default,,0,0,0,,Là hy vọng và ước mơ của mọi người,\Ncậu ấy nỗ lực cả ngày lẫn đêm.
Dialogue: 0,0:19:52.40,0:19:56.78,Default,,0,0,0,,Đừng phủ nhận hết công sức của Junta\Nchỉ vì giờ cậu ấy là mỹ nam.
Dialogue: 0,0:19:58.99,0:19:59.82,Default,,0,0,0,,Tớ về đây.
Dialogue: 0,0:19:59.91,0:20:02.41,Default,,0,0,0,,- Này.\N- Này, Ryuya!
Dialogue: 0,0:20:05.58,0:20:07.83,Default,,0,0,0,,Xin lỗi, nhưng mọi người\Ncứ tiếp tục trước đi.
Dialogue: 0,0:20:10.83,0:20:12.09,Default,,0,0,0,,Đợi đã, Ryuya.
Dialogue: 0,0:20:13.38,0:20:15.46,Default,,0,0,0,,Xin lỗi vì đã phá hỏng bầu không khí.
Dialogue: 0,0:20:15.55,0:20:17.34,Default,,0,0,0,,Tớ vẫn nên ra về thì hơn.
Dialogue: 0,0:20:17.42,0:20:21.09,Default,,0,0,0,,Trời ạ! Đừng lải nhải nữa!
Dialogue: 0,0:20:21.18,0:20:22.18,Default,,0,0,0,,Cậu!
Dialogue: 0,0:20:22.97,0:20:24.31,Default,,0,0,0,,Nói cho cậu biết,
Dialogue: 0,0:20:24.39,0:20:28.14,Default,,0,0,0,,tớ chưa từng nghĩ cậu nhàm chán.
Dialogue: 0,0:20:28.23,0:20:29.27,Default,,0,0,0,,Hả?
Dialogue: 0,0:20:29.35,0:20:31.23,Default,,0,0,0,,Ghen tị để làm gì chứ?
Dialogue: 0,0:20:31.81,0:20:34.94,Default,,0,0,0,,Im đi. Cậu đâu thể ép tớ ở lại.
Dialogue: 0,0:20:35.73,0:20:38.61,Default,,0,0,0,,Chắc cậu chán ngấy tớ rồi.
Dialogue: 0,0:20:39.99,0:20:43.99,Default,,0,0,0,,Tính cách hoài nghi của cậu\Nlà thứ làm cậu thú vị.
Dialogue: 0,0:20:44.08,0:20:46.79,Default,,0,0,0,,Cậu cũng dùng mánh khóe bẩn thỉu\Ntrong game mà.
Dialogue: 0,0:20:46.87,0:20:50.04,Default,,0,0,0,,Đó mà là lời khen à?
Dialogue: 0,0:20:50.92,0:20:55.55,Default,,0,0,0,,Tớ đã nói quá nhiều,\Nlàm cậu khó xử khi ở lại.
Dialogue: 0,0:20:56.05,0:20:58.51,Default,,0,0,0,,Nhưng các bạn sẽ thông cảm mà.
Dialogue: 0,0:20:59.68,0:21:03.35,Default,,0,0,0,,Tớ cũng không quay lưng\Nvới bạn bè như thế đâu.
Dialogue: 0,0:21:03.43,0:21:04.35,Default,,0,0,0,,Tớ…
Dialogue: 0,0:21:06.85,0:21:08.27,Default,,0,0,0,,Tớ bỏ cuộc.
Dialogue: 0,0:21:08.35,0:21:11.98,Default,,0,0,0,,Cậu thật sự\Nchẳng thay đổi gì cả, khỉ thật.
Dialogue: 0,0:21:12.06,0:21:15.73,Default,,0,0,0,,Gì cơ? Tớ có nữ tính hơn một chút mà.
Dialogue: 0,0:21:15.82,0:21:17.48,Default,,0,0,0,,Ý tớ không phải vậy.
Dialogue: 0,0:21:17.57,0:21:21.74,Default,,0,0,0,,Đã vài năm rồi,\Nnên tớ tưởng mình đã quên được cậu.
Dialogue: 0,0:21:22.66,0:21:25.74,Default,,0,0,0,,Tớ đã nói dối sau khi chơi bowling.
Dialogue: 0,0:21:26.49,0:21:28.08,Default,,0,0,0,,Cô giáo mẫu giáo của tớ.
Dialogue: 0,0:21:29.20,0:21:32.58,Default,,0,0,0,,Cậu là người đầu tiên tớ thích.
Dialogue: 0,0:21:34.46,0:21:35.96,Default,,0,0,0,,Nói thật với cậu…
Dialogue: 0,0:21:37.34,0:21:39.51,Default,,0,0,0,,- Tớ vẫn thích cậu…\N- Xin lỗi, không được.
Dialogue: 0,0:21:40.42,0:21:42.30,Default,,0,0,0,,Cậu có thể để tớ nói hết câu mà!
Dialogue: 0,0:21:42.38,0:21:44.05,Default,,0,0,0,,Xin lỗi, tớ trả lời vội quá.
Dialogue: 0,0:21:44.59,0:21:48.06,Default,,0,0,0,,Dù sao thì, tớ không thể hẹn hò\Nvới một kẻ lừa tình được!
Dialogue: 0,0:21:48.14,0:21:51.44,Default,,0,0,0,,Cậu nói thích tớ,\Nnhưng cậu đã hẹn hò với những cô gái khác!
Dialogue: 0,0:21:51.52,0:21:53.85,Default,,0,0,0,,Tớ biết, nhưng…
Dialogue: 0,0:21:54.44,0:21:56.15,Default,,0,0,0,,Ta học khác trường cấp hai.
Dialogue: 0,0:21:56.86,0:22:00.28,Default,,0,0,0,,Tớ không thể cưỡng lại\Ncác cô gái dễ thương khác.
Dialogue: 0,0:22:01.82,0:22:02.78,Default,,0,0,0,,Thật nông cạn.
Dialogue: 0,0:22:02.86,0:22:06.28,Default,,0,0,0,,Nhưng tớ vẫn nghĩ đến cậu\Nngay cả khi ở cùng họ,
Dialogue: 0,0:22:06.37,0:22:08.24,Default,,0,0,0,,và rồi có người khác tỏ tình với tớ.
Dialogue: 0,0:22:08.33,0:22:13.46,Default,,0,0,0,,Tớ nghĩ mình có thể sắp xếp ổn thỏa.\NVà chưa kịp nhận ra thì tớ đã lừa dối họ.
Dialogue: 0,0:22:13.54,0:22:15.08,Default,,0,0,0,,Cậu chỉ là đồ cặn bã.
Dialogue: 0,0:22:15.17,0:22:18.17,Default,,0,0,0,,Cảm ơn vì đã thẳng thắn với tớ nhé.
Dialogue: 0,0:22:18.25,0:22:21.72,Default,,0,0,0,,Sao tớ lại thích người như cậu chứ?
Dialogue: 0,0:22:22.22,0:22:24.38,Default,,0,0,0,,Cậu thẳng thắn, không gợi cảm,
Dialogue: 0,0:22:24.47,0:22:26.47,Default,,0,0,0,,và còn xì mũi soda gừng.
Dialogue: 0,0:22:26.55,0:22:28.39,Default,,0,0,0,,Vụ soda gừng là do bất khả kháng.
Dialogue: 0,0:22:29.01,0:22:29.93,Default,,0,0,0,,Nghe này.
Dialogue: 0,0:22:30.60,0:22:32.89,Default,,0,0,0,,Tớ có cơ hội với cậu không?
Dialogue: 0,0:22:36.15,0:22:37.86,Default,,0,0,0,,Cảm ơn tình cảm của cậu, nhưng…
Dialogue: 0,0:22:38.36,0:22:43.49,Default,,0,0,0,,Tớ muốn ở bên người tớ có thể tin tưởng\Nngay cả khi chúng tớ xa nhau.
Dialogue: 0,0:22:44.82,0:22:47.24,Default,,0,0,0,,Cậu đang nói về Tonta à?
Dialogue: 0,0:22:47.91,0:22:49.83,Default,,0,0,0,,{\i1}Ồ, cậu ấy đoán đúng rồi!{\i0}
Dialogue: 0,0:22:49.91,0:22:53.66,Default,,0,0,0,,Không? Tớ không nghĩ Junta thích tớ.
Dialogue: 0,0:22:53.75,0:22:55.83,Default,,0,0,0,,Đừng nói là cậu không để ý nhé!
Dialogue: 0,0:22:55.92,0:22:58.59,Default,,0,0,0,,Cậu ấy luôn thể hiện rõ điều đó mà!
Dialogue: 0,0:23:00.21,0:23:03.55,Default,,0,0,0,,Dù sao thì tớ cũng chỉ có thể\Ncoi Ryuya là bạn.
Dialogue: 0,0:23:03.63,0:23:06.93,Default,,0,0,0,,Thẳng ruột ngựa vậy! Tim tớ tan nát mất!
Dialogue: 0,0:23:08.35,0:23:10.22,Default,,0,0,0,,Ryuya đã bị từ chối!
Dialogue: 0,0:23:10.31,0:23:12.39,Default,,0,0,0,,Tớ không chịu nổi nữa!
Dialogue: 0,0:23:12.47,0:23:15.77,Default,,0,0,0,,Mấy cái đứa này!\NĐừng xem nhẹ nỗi đau của tớ!
Dialogue: 0,0:23:16.56,0:23:18.02,Default,,0,0,0,,Tớ tiêu rồi.
Dialogue: 0,0:23:18.11,0:23:21.15,Default,,0,0,0,,Riêng việc tớ thích cậu\Nđã khiến tớ thành trò cười rồi.
Dialogue: 0,0:23:21.23,0:23:23.24,Default,,0,0,0,,Đừng biến tình đầu thành thứ đáng xấu hổ.
Dialogue: 0,0:23:24.19,0:23:27.11,Default,,0,0,0,,- Ba cậu lo cho bọn tớ nên đến xem hả?\N- Ừ.
Dialogue: 0,0:23:28.49,0:23:31.91,Default,,0,0,0,,Tớ nghĩ mình làm cậu tổn thương.
Dialogue: 0,0:23:32.45,0:23:34.62,Default,,0,0,0,,Sao cậu lại lo cho tớ?
Dialogue: 0,0:23:34.70,0:23:36.54,Default,,0,0,0,,Tớ đâu có đáng thương vậy.
Dialogue: 0,0:23:36.62,0:23:38.92,Default,,0,0,0,,- Mọi thứ về cậu đều thế.\N- Im đi.
Dialogue: 0,0:23:39.50,0:23:40.59,Default,,0,0,0,,Xin lỗi.
Dialogue: 0,0:23:40.67,0:23:42.88,Default,,0,0,0,,Là do tớ ghen tị quá mức.\NKhông phải lỗi của cậu.
Dialogue: 0,0:23:44.51,0:23:45.84,Default,,0,0,0,,Như Anzu nói.
Dialogue: 0,0:23:45.92,0:23:47.88,Default,,0,0,0,,Chắc cậu đã vô cùng nỗ lực.
Dialogue: 0,0:23:48.72,0:23:50.14,Default,,0,0,0,,Ấn tượng đấy.
Dialogue: 0,0:23:51.64,0:23:52.89,Default,,0,0,0,,Cảm ơn.
Dialogue: 0,0:23:52.97,0:23:55.14,Default,,0,0,0,,Không cần cảm ơn đâu.
Dialogue: 0,0:23:56.98,0:23:58.69,Default,,0,0,0,,Mau quay lại thôi.
Dialogue: 0,0:23:58.77,0:23:59.90,Default,,0,0,0,,Mọi người đang đợi đấy.
Dialogue: 0,0:23:59.98,0:24:03.02,Default,,0,0,0,,Hết Ryuya đến Junta,\Ncậu rất nổi tiếng đấy, Anzu.
Dialogue: 0,0:24:03.11,0:24:04.86,Default,,0,0,0,,Junta không như vậy.
Dialogue: 0,0:24:05.69,0:24:09.91,Default,,0,0,0,,{\i1}Mình phải vào vai nữ chính ngốc nghếch\Nkhông nhận ra tình cảm của cậu ấy.{\i0}
Dialogue: 0,0:24:11.45,0:24:12.66,Default,,0,0,0,,Tonta, đợi đã.
Dialogue: 0,0:24:13.37,0:24:17.25,Default,,0,0,0,,Tớ đã nói dối cậu\Nkhi chúng ta học tiểu học.
Dialogue: 0,0:24:17.91,0:24:19.12,Default,,0,0,0,,Gì vậy?
Dialogue: 0,0:24:19.21,0:24:20.42,Default,,0,0,0,,Này Tonta.
Dialogue: 0,0:24:20.92,0:24:23.96,Default,,0,0,0,,Anzu chơi {\i1}Người Hùng Mèo{\i0} với bọn tớ rồi.
Dialogue: 0,0:24:24.46,0:24:26.59,Default,,0,0,0,,Cậu ấy không chơi với cậu nữa đâu.
Dialogue: 0,0:24:28.72,0:24:29.89,Default,,0,0,0,,Vậy à?
Dialogue: 0,0:24:29.97,0:24:33.72,Default,,0,0,0,,{\i1}Tớ đã cố đẩy cậu ra xa Anzu.{\i0}
Dialogue: 0,0:24:34.56,0:24:36.18,Default,,0,0,0,,Kể từ ngày đó,
Dialogue: 0,0:24:36.27,0:24:41.10,Default,,0,0,0,,cậu gần như không nói chuyện\Nvới Anzu rồi lại chuyển đi.
Dialogue: 0,0:24:42.44,0:24:43.57,Default,,0,0,0,,Thì ra là vậy.
Dialogue: 0,0:24:44.61,0:24:45.78,Default,,0,0,0,,Tớ thấy vui lắm.
Dialogue: 0,0:24:46.28,0:24:49.61,Default,,0,0,0,,Không phải do Anzu chán tớ.
Dialogue: 0,0:24:49.70,0:24:52.78,Default,,0,0,0,,Sao cậu không giận tớ?
Dialogue: 0,0:24:52.87,0:24:55.83,Default,,0,0,0,,Nhưng đó là quá khứ rồi mà.
Dialogue: 0,0:24:55.91,0:24:58.04,Default,,0,0,0,,Giờ tớ đang ở bên Anzu rồi.
Dialogue: 0,0:24:59.75,0:25:02.58,Default,,0,0,0,,Cảm ơn cậu vì đã áy náy suốt bao năm qua.
Dialogue: 0,0:25:03.08,0:25:05.00,Default,,0,0,0,,{\i1}Cậu ấy tốt quá.{\i0}
Dialogue: 0,0:25:05.59,0:25:08.01,Default,,0,0,0,,Dù sao thì, xin lỗi về chuyện đó.
Dialogue: 0,0:25:08.59,0:25:12.51,Default,,0,0,0,,Kể cả thế! Tớ vẫn chưa từ bỏ Anzu đâu.
Dialogue: 0,0:25:12.59,0:25:14.68,Default,,0,0,0,,- À…\N- Cậu thích Anzu, đúng không?
Dialogue: 0,0:25:17.56,0:25:20.19,Default,,0,0,0,,Lộ liễu quá đấy. Quay vào thôi.
Dialogue: 0,0:25:23.56,0:25:27.48,Default,,0,0,0,,- Ryuya, bị từ chối vui vẻ!\N- Ryuya, bị từ chối vui vẻ!
Dialogue: 0,0:25:27.57,0:25:29.78,Default,,0,0,0,,Được rồi, mọi người!
Dialogue: 0,0:25:29.86,0:25:31.99,Default,,0,0,0,,{\an8}Hát tặng Ryuya những bài hát thất tình đi!
Dialogue: 0,0:25:32.07,0:25:33.41,Default,,0,0,0,,{\an8}- Tuyệt!\N- Tuyệt!
Dialogue: 0,0:25:33.49,0:25:35.16,Default,,0,0,0,,{\an8}Các cậu!
Dialogue: 0,0:25:35.24,0:25:37.45,Default,,0,0,0,,{\an8}Thật đấy, dừng lại đi!
Dialogue: 0,0:25:37.54,0:25:38.37,Default,,0,0,0,,XẾP HẠNG NHẠC THẤT TÌNH
Dialogue: 0,0:25:39.41,0:25:41.00,Default,,0,0,0,,Vỗ tay!
Dialogue: 0,0:25:41.08,0:25:43.12,Default,,0,0,0,,Chúc mừng!
Dialogue: 0,0:25:43.21,0:25:48.55,Default,,0,0,0,,Cá là cậu hứng thú với diễn biến sau đó,\Nkhông thể bỏ qua đoạn này đâu nhé!
Dialogue: 0,0:25:48.63,0:25:52.30,Default,,0,0,0,,Ta sống trong thời đại muốn gì xem đó.
Dialogue: 0,0:25:52.38,0:25:55.97,Default,,0,0,0,,Nhưng ta đã mất gì trong quá trình trên?
Dialogue: 0,0:25:56.05,0:25:57.43,Default,,0,0,0,,Đừng nói không muốn thay đổi.
Dialogue: 0,0:25:57.51,0:26:00.10,Default,,0,0,0,,Hãy phiêu lưu và sống\Nmột cuộc đời hạnh phúc, lấp lánh!
Dialogue: 0,0:26:00.18,0:26:02.10,Default,,0,0,0,,Vì lương của tớ cả thôi.
Dialogue: 0,0:26:04.44,0:26:05.27,Default,,0,0,0,,{\i1}Ah, yeah!{\i0}
Dialogue: 0,0:26:07.90,0:26:08.73,Default,,0,0,0,,{\an8\i1}Let's go!{\i0}
Dialogue: 0,0:26:11.28,0:26:12.40,Default,,0,0,0,,{\an8\i1}Lo-love!{\i0}
Dialogue: 0,0:26:14.49,0:26:15.32,Default,,0,0,0,,{\an8\i1}Here we go!{\i0}
Dialogue: 0,0:26:15.41,0:26:18.62,Default,,0,0,0,,{\an8\i1}Xin lỗi vì đã ép cậu{\i0}
Dialogue: 0,0:26:18.70,0:26:21.87,Default,,0,0,0,,{\an8\i1}Nhưng tớ hứa cậu sẽ tận hưởng\NMột tương lai tuyệt vời{\i0}
Dialogue: 0,0:26:21.96,0:26:28.59,Default,,0,0,0,,{\an8\i1}Không, không phải ba khao khát lớn của cậu\NGame, sô-cô-la và mèo{\i0}
Dialogue: 0,0:26:28.67,0:26:31.51,Default,,0,0,0,,{\an8}Tôi sẽ không bao giờ đầu hàng\Ntrước đám trai đẹp này!
Dialogue: 0,0:26:31.59,0:26:34.97,Default,,0,0,0,,{\an8}Giờ cậu nói thế thôi,\Nnhưng tớ biết rồi cậu sẽ bỏ cuộc!
Dialogue: 0,0:26:35.05,0:26:36.68,Default,,0,0,0,,{\i1}Cậu cũng thế!{\i0}
Dialogue: 0,0:26:36.76,0:26:38.43,Default,,0,0,0,,{\i1}Tớ biết tim cậu đang đập rất nhanh!{\i0}
Dialogue: 0,0:26:38.51,0:26:41.06,Default,,0,0,0,,{\i1}Yêu, không ai có thể ngăn cản tình yêu!{\i0}
Dialogue: 0,0:26:41.14,0:26:43.64,Default,,0,0,0,,{\an8\i1}Thôi nào, cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:26:43.73,0:26:44.94,Default,,0,0,0,,{\an8\i1}Thừa nhận đi{\i0}
Dialogue: 0,0:26:45.02,0:26:47.02,Default,,0,0,0,,{\i1}Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:26:47.11,0:26:48.32,Default,,0,0,0,,{\i1}Đừng cứng đầu nữa{\i0}
Dialogue: 0,0:26:48.40,0:26:50.23,Default,,0,0,0,,{\i1}Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:26:50.32,0:26:54.49,Default,,0,0,0,,{\i1}Cậu không thể né tránh trai đẹp mãi{\i0}
Dialogue: 0,0:26:54.57,0:26:56.61,Default,,0,0,0,,{\i1}Thôi nào! Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:26:56.70,0:26:58.16,Default,,0,0,0,,{\i1}Cứ để đó cho tớ{\i0}
Dialogue: 0,0:26:58.24,0:27:00.29,Default,,0,0,0,,{\i1}Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:27:00.37,0:27:01.45,Default,,0,0,0,,{\i1}Nào nhận thua đi{\i0}
Dialogue: 0,0:27:01.54,0:27:03.54,Default,,0,0,0,,{\i1}Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:27:03.62,0:27:08.42,Default,,0,0,0,,{\an8\i1}Cậu không thể né tránh trai đẹp mãi{\i0}
Dialogue: 0,0:27:08.50,0:27:09.75,Default,,0,0,0,,{\an8\i1}Ôm lấy tớ, ôm thật chặt{\i0}
Dialogue: 0,0:27:09.84,0:27:11.46,Default,,0,0,0,,{\an8\i1}Giải phóng phần hoang dại trong cậu{\i0}
Dialogue: 0,0:27:11.55,0:27:13.05,Default,,0,0,0,,{\an8\i1}Dấu hiệu tình yêu chỉ cậu nhận ra{\i0}
Dialogue: 0,0:27:13.13,0:27:16.05,Default,,0,0,0,,{\an8\i1}Lãng mạn lên nào!{\i0}
