Dialogue: 0,0:00:09.01,0:00:11.93,Default,,0,0,0,,LOẠT PHIM NETFLIX
Dialogue: 0,0:00:13.51,0:00:16.43,Default,,0,0,0,,Ôi không, mình muộn rồi!
Dialogue: 0,0:00:17.39,0:00:18.44,Default,,0,0,0,,{\i1}Khoan, đợi đã.{\i0}
Dialogue: 0,0:00:18.52,0:00:20.81,Default,,0,0,0,,{\i1}Mình vừa nói gì?{\i0}
Dialogue: 0,0:00:23.98,0:00:26.82,Default,,0,0,0,,Cậu ta là người nhảy ra trước đầu xe.
Dialogue: 0,0:00:28.86,0:00:30.95,Default,,0,0,0,,{\an8}ĐƯỜNG MỘT CHIỀU
Dialogue: 0,0:00:31.03,0:00:33.37,Default,,0,0,0,,Từ giờ xin hãy cẩn thận.
Dialogue: 0,0:00:35.54,0:00:37.58,Default,,0,0,0,,Chúng tôi sẽ hộ tống cô đến trường.
Dialogue: 0,0:00:42.17,0:00:44.75,Default,,0,0,0,,{\i1}Chiếc xe trông đắt tiền quá.{\i0}
Dialogue: 0,0:00:46.92,0:00:49.92,Default,,0,0,0,,Xin lỗi đã làm cậu đến trường muộn.
Dialogue: 0,0:00:50.51,0:00:56.01,Default,,0,0,0,,Vài lần đi muộn không ảnh hưởng\Nđến danh tiếng hoàn hảo của tôi đâu.
Dialogue: 0,0:00:57.02,0:00:59.14,Default,,0,0,0,,{\i1}Nhưng sao con trai nhà giàu như cậu ta{\i0}
Dialogue: 0,0:00:59.23,0:01:01.19,Default,,0,0,0,,{\i1}lại học trường công lập như mình?{\i0}
Dialogue: 0,0:01:01.27,0:01:03.44,Default,,0,0,0,,{\i1}Trai đẹp ở trường mình sao?{\i0}
Dialogue: 0,0:01:04.61,0:01:06.02,Default,,0,0,0,,Tôi biết chắc cậu…
Dialogue: 0,0:01:07.65,0:01:10.95,Default,,0,0,0,,đang rất vui vì được đi học cùng tôi.
Dialogue: 0,0:01:11.53,0:01:13.03,Default,,0,0,0,,Cậu nên cảm thấy biết ơn.
Dialogue: 0,0:01:16.03,0:01:18.75,Default,,0,0,0,,{\i1}Suýt nữa mình đã đấm vào mặt cậu ta.{\i0}
Dialogue: 0,0:01:18.83,0:01:21.87,Default,,0,0,0,,{\i1}Nhịn nào. Là do mình bất cẩn trước.{\i0}
Dialogue: 0,0:01:24.17,0:01:26.84,Default,,0,0,0,,{\i1}Saki và Kazuki nhắn tin cho mình.{\i0}
Dialogue: 0,0:01:26.92,0:01:27.75,Default,,0,0,0,,SAKI: CẬU ĐÂU RỒI?
Dialogue: 0,0:01:27.84,0:01:29.05,Default,,0,0,0,,{\an8\i1}Phải trả lời thôi.{\i0}
Dialogue: 0,0:01:29.13,0:01:31.34,Default,,0,0,0,,{\an8}TỚ GẶP TAI NẠN NHỎ, NHƯNG KHÔNG SAO.
Dialogue: 0,0:03:02.68,0:03:05.35,Default,,0,0,0,,{\an8}#7 CHẮC CẬU CŨNG CÓ MẶT KỲ QUẶC…
Dialogue: 0,0:03:05.44,0:03:06.31,Default,,0,0,0,,{\an8}Ôi chao…
Dialogue: 0,0:03:08.98,0:03:10.86,Default,,0,0,0,,{\i1}Sao lại đến vào giờ nghỉ chứ?{\i0}
Dialogue: 0,0:03:13.23,0:03:15.82,Default,,0,0,0,,Lớp của tôi ở đây.
Dialogue: 0,0:03:16.53,0:03:18.87,Default,,0,0,0,,Tsuchiya đã cho cậu\Nthông tin liên lạc, đúng không?
Dialogue: 0,0:03:19.78,0:03:21.91,Default,,0,0,0,,- Tôi là Tsuchiya.\N- Ừ.
Dialogue: 0,0:03:22.41,0:03:25.33,Default,,0,0,0,,Chúng tôi sẽ liên lạc vào hôm khác.
Dialogue: 0,0:03:26.33,0:03:28.21,Default,,0,0,0,,Đừng lo lắng quá khi chờ chúng tôi gọi.
Dialogue: 0,0:03:30.00,0:03:32.25,Default,,0,0,0,,{\i1}Mình có phải làm biên bản\Ncho vụ tai nạn không?{\i0}
Dialogue: 0,0:03:34.13,0:03:35.63,Default,,0,0,0,,Nhìn chằm chằm.
Dialogue: 0,0:03:36.67,0:03:40.35,Default,,0,0,0,,Anzu. Sao cậu lại đi học\Ncùng Hoàng tử Koganei Hijiri vậy?
Dialogue: 0,0:03:40.43,0:03:41.26,Default,,0,0,0,,"Hoàng tử" à?
Dialogue: 0,0:03:41.35,0:03:43.85,Default,,0,0,0,,Anzu, cậu không bị thương thật chứ?
Dialogue: 0,0:03:43.93,0:03:45.68,Default,,0,0,0,,Ừ, cảm ơn, Saki.
Dialogue: 0,0:03:45.77,0:03:47.44,Default,,0,0,0,,Tớ biết rồi!
Dialogue: 0,0:03:47.52,0:03:50.02,Default,,0,0,0,,Tai nạn có liên quan đến\Nxe của Hoàng tử Hjiri!
Dialogue: 0,0:03:50.10,0:03:51.56,Default,,0,0,0,,"Hoàng tử" là sao?
Dialogue: 0,0:03:51.65,0:03:52.77,Default,,0,0,0,,Cậu không biết à?
Dialogue: 0,0:03:52.86,0:03:55.74,Default,,0,0,0,,Cậu ấy là con trai đại gia,\NKoganei Hijiri của Lớp 8!
Dialogue: 0,0:03:55.82,0:03:59.03,Default,,0,0,0,,Nhìn phong thái ngài ấy đi.\NCó cả fan club dành riêng cho ngài nữa!
Dialogue: 0,0:03:59.74,0:04:01.28,Default,,0,0,0,,Ra vậy…
Dialogue: 0,0:04:01.37,0:04:03.03,Default,,0,0,0,,{\i1}Mình đã lên thuyền một thời gian,{\i0}
Dialogue: 0,0:04:03.87,0:04:06.04,Default,,0,0,0,,{\i1}chắc lần này nó lại giở trò gì rồi.{\i0}
Dialogue: 0,0:04:06.12,0:04:08.21,Default,,0,0,0,,Đi nào!
Dialogue: 0,0:04:08.92,0:04:11.42,Default,,0,0,0,,Cậu sẽ phải vội vã đến trường!
Dialogue: 0,0:04:11.50,0:04:12.84,Default,,0,0,0,,- Hosshi!\N- Anzu.
Dialogue: 0,0:04:14.13,0:04:17.55,Default,,0,0,0,,- Cậu có bị thương không?\N- Tớ đã rất lo cho cậu.
Dialogue: 0,0:04:18.13,0:04:19.59,Default,,0,0,0,,Chà! Là Hayami!
Dialogue: 0,0:04:19.68,0:04:22.51,Default,,0,0,0,,- Cậu không bị thương chứ?\N- Không sao hết, ổn cả.
Dialogue: 0,0:04:25.01,0:04:27.56,Default,,0,0,0,,Chắc cậu vội lắm vì muộn giờ.
Dialogue: 0,0:04:27.64,0:04:28.77,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:04:28.85,0:04:31.52,Default,,0,0,0,,Nhưng ít nhất cậu cũng nên đi khám chứ.
Dialogue: 0,0:04:31.60,0:04:33.27,Default,,0,0,0,,Không có gì nghiêm trọng đâu.
Dialogue: 0,0:04:33.36,0:04:35.44,Default,,0,0,0,,Hosshi, cậu là bạn của Hayami!
Dialogue: 0,0:04:35.53,0:04:36.90,Default,,0,0,0,,Tuyệt quá!
Dialogue: 0,0:04:36.99,0:04:39.95,Default,,0,0,0,,Cậu ấy là bạn thời thơ ấu của tớ,\N(tạm thời thôi).
Dialogue: 0,0:04:40.03,0:04:40.95,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:04:41.45,0:04:43.66,Default,,0,0,0,,Nếu thấy không khỏe thì gọi tớ nhé.
Dialogue: 0,0:04:43.74,0:04:45.08,Default,,0,0,0,,Ừ, cảm ơn cậu.
Dialogue: 0,0:04:46.49,0:04:49.50,Default,,0,0,0,,Không chịu đâu. Ghen tị quá.
Dialogue: 0,0:04:49.58,0:04:52.67,Default,,0,0,0,,Hai anh chàng nóng bỏng,\NKazuki và Hayami, vây quanh cậu.
Dialogue: 0,0:04:52.75,0:04:56.05,Default,,0,0,0,,Mình không nghĩ Kazuki đang lo đâu…
Dialogue: 0,0:04:59.05,0:05:01.97,Default,,0,0,0,,{\an8}VÀI NGÀY SAU
Dialogue: 0,0:05:03.05,0:05:04.93,Default,,0,0,0,,{\i1}Mình đến sớm quá à?{\i0}
Dialogue: 0,0:05:08.06,0:05:10.81,Default,,0,0,0,,{\i1}Cô có thời gian vào thứ Bảy này chứ?{\i0}
Dialogue: 0,0:05:12.31,0:05:14.06,Default,,0,0,0,,{\i1}Cậu ta muốn nói chuyện gì?{\i0}
Dialogue: 0,0:05:20.07,0:05:21.49,Default,,0,0,0,,Cậu đến sớm hơn tôi nghĩ đấy.
Dialogue: 0,0:05:22.95,0:05:25.99,Default,,0,0,0,,Cậu cắm trại ngoài này\Nvì nóng lòng muốn gặp tôi à?
Dialogue: 0,0:05:27.54,0:05:30.00,Default,,0,0,0,,Chắc cậu cũng có mặt kỳ quặc…
Dialogue: 0,0:05:31.16,0:05:32.96,Default,,0,0,0,,Phải, tôi đợi cậu mãi.
Dialogue: 0,0:05:33.04,0:05:35.50,Default,,0,0,0,,Tôi đợi ở đây\Nnhư một vệ sĩ đang đợi chủ nhân.
Dialogue: 0,0:05:36.50,0:05:39.55,Default,,0,0,0,,Mà này, cậu ăn mặc như thường dân vậy.
Dialogue: 0,0:05:40.17,0:05:43.84,Default,,0,0,0,,Cậu đang cố sỉ nhục tôi\Nbằng cách ăn mặc luộm thuộm à?
Dialogue: 0,0:05:47.81,0:05:51.52,Default,,0,0,0,,{\an8\i1}Xin lỗi, tôi như nhân vật\Nkhông phải người chơi trong game,{\i0}
Dialogue: 0,0:05:51.60,0:05:53.73,Default,,0,0,0,,{\an8\i1}chỉ có thể lặp lại một câu thoại!{\i0}
Dialogue: 0,0:05:53.81,0:05:54.77,Default,,0,0,0,,{\an8}DÂN LÀNG A
Dialogue: 0,0:05:55.90,0:05:57.40,Default,,0,0,0,,Hết cách rồi.
Dialogue: 0,0:05:58.11,0:05:59.48,Default,,0,0,0,,- Lên xe đi.\N- Hả?
Dialogue: 0,0:06:02.45,0:06:05.03,Default,,0,0,0,,- Cậu có thể chân thành hơn mà.\N- Gì?
Dialogue: 0,0:06:05.62,0:06:09.54,Default,,0,0,0,,Hôm nay tôi sẽ biến cậu thành Lọ Lem.
Dialogue: 0,0:06:10.62,0:06:13.29,Default,,0,0,0,,{\i1}Mình cần phiên dịch viên.{\i0}
Dialogue: 0,0:06:16.88,0:06:17.96,Default,,0,0,0,,Này…
Dialogue: 0,0:06:26.26,0:06:29.89,Default,,0,0,0,,- Cái này để làm gì?\N- Thật tao nhã!
Dialogue: 0,0:06:31.72,0:06:33.31,Default,,0,0,0,,Trông tử tế hơn rồi.
Dialogue: 0,0:06:33.39,0:06:35.81,Default,,0,0,0,,Cậu phải giao tiếp tốt hơn chứ!
Dialogue: 0,0:06:37.94,0:06:41.65,Default,,0,0,0,,Chọn giày gót thấp hơn đi.\NNgười gì cao như cây sào.
Dialogue: 0,0:06:41.73,0:06:44.15,Default,,0,0,0,,Cậu có thể lấy chiều cao của tôi.
Dialogue: 0,0:06:46.24,0:06:49.12,Default,,0,0,0,,- Đến lúc ăn trưa rồi.\N- Hả?
Dialogue: 0,0:06:49.20,0:06:50.99,Default,,0,0,0,,Ăn trưa?
Dialogue: 0,0:06:53.00,0:06:55.16,Default,,0,0,0,,Mất nhiều thời gian hơn tôi nghĩ.
Dialogue: 0,0:06:55.25,0:06:57.50,Default,,0,0,0,,- Giải thích đi!\N- Ta sẽ ăn món Pháp.
Dialogue: 0,0:06:58.84,0:07:00.17,Default,,0,0,0,,Ý tôi không phải vậy!
Dialogue: 0,0:07:01.34,0:07:04.80,Default,,0,0,0,,Cậu bắt tôi thay quần áo\Nvà trang điểm. Có chuyện gì vậy?
Dialogue: 0,0:07:05.38,0:07:10.30,Default,,0,0,0,,Là lỗi của cậu vì trông lôi thôi\Ntrong buổi hẹn hò của chúng ta.
Dialogue: 0,0:07:10.89,0:07:12.56,Default,,0,0,0,,Hẹn hò gì chứ?
Dialogue: 0,0:07:12.64,0:07:15.02,Default,,0,0,0,,Tôi tưởng ta gặp nhau\Nđể bàn về vụ tai nạn!
Dialogue: 0,0:07:15.10,0:07:16.31,Default,,0,0,0,,Không cần giả vờ.
Dialogue: 0,0:07:16.81,0:07:19.86,Default,,0,0,0,,Cậu đã nhảy ra trước đầu xe\Nđể tiếp cận tôi.
Dialogue: 0,0:07:21.02,0:07:22.32,Default,,0,0,0,,Gì cơ?
Dialogue: 0,0:07:24.07,0:07:26.53,Default,,0,0,0,,Các phương tiện\Nđược xem là có lỗi trong tai nạn.
Dialogue: 0,0:07:27.03,0:07:30.32,Default,,0,0,0,,Cậu định lợi dụng điều đó\Nđể đe dọa bắt tôi hẹn hò.
Dialogue: 0,0:07:30.41,0:07:33.12,Default,,0,0,0,,Khoan, cậu nghĩ tôi giả vờ gây tai nạn à?
Dialogue: 0,0:07:33.20,0:07:35.62,Default,,0,0,0,,- Không phải sao?\N- Hoàn toàn không!
Dialogue: 0,0:07:35.71,0:07:37.46,Default,,0,0,0,,Ai lại ngốc đến mức làm thế chứ?
Dialogue: 0,0:07:37.54,0:07:39.67,Default,,0,0,0,,Từ hồi tôi học mẫu giáo đã nhiều vô số kể.
Dialogue: 0,0:07:39.75,0:07:41.50,Default,,0,0,0,,Nhiều hơn tôi tưởng đấy.
Dialogue: 0,0:07:41.59,0:07:44.55,Default,,0,0,0,,Tsuchiya có lý lịch lái xe rất tệ\Nvì điều đó.
Dialogue: 0,0:07:44.63,0:07:45.88,Default,,0,0,0,,Bị thu bằng lái một lần.
Dialogue: 0,0:07:45.97,0:07:48.89,Default,,0,0,0,,Kinh khủng quá! Tôi thành thật xin lỗi!
Dialogue: 0,0:07:49.39,0:07:52.18,Default,,0,0,0,,Dù sao thì\Ntôi cũng không cố ý gây tai nạn.
Dialogue: 0,0:07:52.68,0:07:56.31,Default,,0,0,0,,Tôi không thể nhận chiếc váy này.\NTôi sẽ trả tiền.
Dialogue: 0,0:07:56.39,0:07:58.81,Default,,0,0,0,,Chiếc váy đó có giá 120.000 yên.
Dialogue: 0,0:07:58.90,0:08:02.82,Default,,0,0,0,,Nó được làm từ chỉ cổ sao?
Dialogue: 0,0:08:02.90,0:08:04.36,Default,,0,0,0,,Không sao rồi.
Dialogue: 0,0:08:04.44,0:08:07.28,Default,,0,0,0,,Dù cố ý hay không, tai nạn đã xảy ra.
Dialogue: 0,0:08:08.40,0:08:11.70,Default,,0,0,0,,Cậu đang có cơ hội duy nhất trong đời\Nđược mặc đẹp và dùng bữa với tôi.
Dialogue: 0,0:08:12.37,0:08:14.45,Default,,0,0,0,,Quá vinh dự cho một thường dân.
Dialogue: 0,0:08:18.33,0:08:19.83,Default,,0,0,0,,Ông Tsuchiya, dừng xe lại.
Dialogue: 0,0:08:22.42,0:08:23.54,Default,,0,0,0,,Này?
Dialogue: 0,0:08:23.63,0:08:25.92,Default,,0,0,0,,Cảm ơn vì đã quan tâm…
Dialogue: 0,0:08:30.18,0:08:32.47,Default,,0,0,0,,Nhưng tôi không có hứng thú với cậu.
Dialogue: 0,0:08:33.68,0:08:36.31,Default,,0,0,0,,Chúng ta không cần\Nphí thời gian của nhau nữa.
Dialogue: 0,0:08:37.56,0:08:38.48,Default,,0,0,0,,Tạm biệt.
Dialogue: 0,0:08:41.56,0:08:44.36,Default,,0,0,0,,{\i1}Phải, mình bực bội vì bị\Nmột tên công tử nhà giàu dắt mũi.{\i0}
Dialogue: 0,0:08:44.44,0:08:48.78,Default,,0,0,0,,{\i1}Cái thái độ tự luyến và trịch thượng\Ncủa hắn làm mình khó chịu.{\i0}
Dialogue: 0,0:08:49.28,0:08:51.49,Default,,0,0,0,,{\i1}Nhưng điều làm mình khó chịu nhất{\i0}
Dialogue: 0,0:08:51.57,0:08:54.49,Default,,0,0,0,,{\i1}là cậu ta nghĩ\Nmình sẽ dàn dựng một tai nạn{\i0}
Dialogue: 0,0:08:54.58,0:08:56.49,Default,,0,0,0,,{\i1}vì tình yêu!{\i0}
Dialogue: 0,0:08:57.95,0:08:59.50,Default,,0,0,0,,TRAI ĐẸP
Dialogue: 0,0:08:59.58,0:09:03.21,Default,,0,0,0,,{\i1}Xin lỗi, nhưng ta là chiến binh{\i0}
Dialogue: 0,0:09:03.29,0:09:05.00,Default,,0,0,0,,{\i1}tiêu diệt trai đẹp!{\i0}
Dialogue: 0,0:09:09.59,0:09:12.47,Default,,0,0,0,,{\an8\i1}Hơn nữa, mình cũng vã mồ hôi\Nkhi mặc chiếc váy 120.000 yên này.{\i0}
Dialogue: 0,0:09:12.55,0:09:15.64,Default,,0,0,0,,{\an8}ĐÂY LÀ MỘT ANIME LÃNG MẠN
Dialogue: 0,0:09:18.22,0:09:21.35,Default,,0,0,0,,Cậu ta không có hứng thú với mình sao?
Dialogue: 0,0:09:27.48,0:09:29.03,Default,,0,0,0,,HIJIRI YÊU DẤU\NNHÌN EM ĐI NÀO
Dialogue: 0,0:09:29.11,0:09:32.03,Default,,0,0,0,,Hoàng tử Hijiri có vẻ buồn.
Dialogue: 0,0:09:32.11,0:09:34.49,Default,,0,0,0,,Lúc buồn cậu ấy cũng dễ thương nữa!
Dialogue: 0,0:09:39.20,0:09:40.54,Default,,0,0,0,,Koganei Hijiri.
Dialogue: 0,0:09:40.62,0:09:43.17,Default,,0,0,0,,Lại là cậu.
Dialogue: 0,0:09:43.75,0:09:46.04,Default,,0,0,0,,Thật thô lỗ khi không xưng hô tử tế.
Dialogue: 0,0:09:47.30,0:09:48.80,Default,,0,0,0,,Cậu đang nói gì vậy?
Dialogue: 0,0:09:50.34,0:09:51.84,Default,,0,0,0,,Cậu muốn gì ở tôi?
Dialogue: 0,0:09:51.92,0:09:54.51,Default,,0,0,0,,Cậu đến xin tôi tha thứ\Nvì thái độ của mình hôm trước à?
Dialogue: 0,0:09:54.59,0:09:57.51,Default,,0,0,0,,Tôi đem cái váy đi giặt rồi.
Dialogue: 0,0:09:57.60,0:09:58.43,Default,,0,0,0,,Tạm biệt!
Dialogue: 0,0:10:03.69,0:10:07.65,Default,,0,0,0,,{\i1}Cậu ta trả lại quà cho mình và bỏ đi.{\i0}
Dialogue: 0,0:10:10.53,0:10:13.20,Default,,0,0,0,,{\i1}Không cần bận lòng vì một thường dân.{\i0}
Dialogue: 0,0:10:13.78,0:10:16.82,Default,,0,0,0,,{\i1}Không ngờ cậu ta lại đối xử\Nvới mình như vậy.{\i0}
Dialogue: 0,0:10:19.41,0:10:20.49,Default,,0,0,0,,{\i1}Thật khó chịu.{\i0}
Dialogue: 0,0:10:23.33,0:10:26.04,Default,,0,0,0,,Tsuchiya, giúp tôi tìm hiểu một chuyện.
Dialogue: 0,0:10:31.59,0:10:33.59,Default,,0,0,0,,Cậu trông vui nhỉ, Junta.
Dialogue: 0,0:10:33.67,0:10:36.59,Default,,0,0,0,,Thứ Tư không có buổi tập\Nnên tớ có thể cùng cậu về nhà.
Dialogue: 0,0:10:36.68,0:10:38.35,Default,,0,0,0,,Ra là vậy.
Dialogue: 0,0:10:38.43,0:10:40.18,Default,,0,0,0,,Hôm nay Kazuki đi làm thêm nhỉ?
Dialogue: 0,0:10:40.26,0:10:42.52,Default,,0,0,0,,Ừ. Bữa tối tính sao đây?
Dialogue: 0,0:10:43.60,0:10:46.10,Default,,0,0,0,,Sẽ không ngon lắm, nhưng tớ có thể nấu.
Dialogue: 0,0:10:46.60,0:10:49.02,Default,,0,0,0,,Thật sao? Tớ muốn thử đồ ăn cậu làm!
Dialogue: 0,0:10:50.11,0:10:52.65,Default,,0,0,0,,Tớ cũng nên học nấu vài món.
Dialogue: 0,0:10:52.74,0:10:54.90,Default,,0,0,0,,Tớ chỉ biết nấu mì ăn liền thôi.
Dialogue: 0,0:10:54.99,0:10:56.99,Default,,0,0,0,,Cứ tập trung vào bóng chày thôi, Junta.
Dialogue: 0,0:10:57.62,0:11:00.16,Default,,0,0,0,,{\i1}Cậu ấy tốt bụng quá,\Nkhông như thằng nhóc đó.{\i0}
Dialogue: 0,0:11:00.24,0:11:04.54,Default,,0,0,0,,{\i1}Mình muốn Junta được ở bên\Nngười cậu ấy thật sự yêu quý.{\i0}
Dialogue: 0,0:11:04.62,0:11:07.42,Default,,0,0,0,,{\i1}Mình phải nhanh chóng xử nó vì Junta.{\i0}
Dialogue: 0,0:11:07.50,0:11:09.00,Default,,0,0,0,,Anzu!
Dialogue: 0,0:11:09.59,0:11:12.09,Default,,0,0,0,,Tớ muốn ăn tối cùng mọi người!
Dialogue: 0,0:11:12.17,0:11:14.01,Default,,0,0,0,,{\i1}Mình nên ra tay diệt trừ luôn thôi.{\i0}
Dialogue: 0,0:11:14.09,0:11:15.51,Default,,0,0,0,,Dù sao thì,
Dialogue: 0,0:11:15.59,0:11:18.26,Default,,0,0,0,,sao cậu có thể cài tên đó vào đời tôi?
Dialogue: 0,0:11:18.34,0:11:20.10,Default,,0,0,0,,Không đời nào tôi yêu cậu ta!
Dialogue: 0,0:11:20.18,0:11:23.27,Default,,0,0,0,,À, khi tớ ở hình dạng này,\Nmọi người có thể nhìn và nghe thấy cậu.
Dialogue: 0,0:11:25.64,0:11:29.19,Default,,0,0,0,,Tôi nấu ăn tệ lắm. Cậu ăn ở nhà đi.
Dialogue: 0,0:11:29.27,0:11:31.52,Default,,0,0,0,,Cậu không định buông áo tớ ra à?
Dialogue: 0,0:11:37.20,0:11:38.53,Default,,0,0,0,,Hoshino Anzu.
Dialogue: 0,0:11:39.12,0:11:40.16,Default,,0,0,0,,Lại nữa.
Dialogue: 0,0:11:40.74,0:11:44.16,Default,,0,0,0,,Cậu là người phụ nữ đầu tiên\Nnói không hứng thú với tôi.
Dialogue: 0,0:11:44.95,0:11:46.16,Default,,0,0,0,,Thật thú vị.
Dialogue: 0,0:11:46.96,0:11:49.92,Default,,0,0,0,,Tôi sẽ khiến cậu\Ntrúng bùa mê của mình bằng mọi giá.
Dialogue: 0,0:11:50.96,0:11:51.84,Default,,0,0,0,,Gì chứ?
Dialogue: 0,0:11:56.30,0:11:58.22,Default,,0,0,0,,Tớ đói quá!
Dialogue: 0,0:11:58.30,0:11:59.59,Default,,0,0,0,,- Bụng tớ vừa reo!\N- Ra vậy.
Dialogue: 0,0:11:59.68,0:12:01.22,Default,,0,0,0,,Căn nhà bé tí.
Dialogue: 0,0:12:01.30,0:12:04.47,Default,,0,0,0,,- Junta thích ăn gì?\N- Hoàng tử thấy vậy cũng phải.
Dialogue: 0,0:12:04.56,0:12:06.73,Default,,0,0,0,,- Xem nào.\N- Hai người này là ai?
Dialogue: 0,0:12:06.81,0:12:09.10,Default,,0,0,0,,Tôi chỉ đến đây vì Anzu thôi.
Dialogue: 0,0:12:10.69,0:12:12.44,Default,,0,0,0,,Tớ là Riri, em họ của Anzu.
Dialogue: 0,0:12:12.98,0:12:16.78,Default,,0,0,0,,Cậu ấy là Junta, bạn thời thơ ấu của Anzu.
Dialogue: 0,0:12:16.86,0:12:19.61,Default,,0,0,0,,Bọn tớ có hẹn ăn tối rồi!
Dialogue: 0,0:12:19.70,0:12:21.45,Default,,0,0,0,,Cậu không được chào đón ở đây.
Dialogue: 0,0:12:22.28,0:12:23.45,Default,,0,0,0,,Sao nào?
Dialogue: 0,0:12:24.03,0:12:26.70,Default,,0,0,0,,Sao cậu lại ở đây?\NLãng phí thời gian của tôi à?
Dialogue: 0,0:12:27.54,0:12:28.46,Default,,0,0,0,,Tsuchiya.
Dialogue: 0,0:12:29.17,0:12:30.00,Default,,0,0,0,,Vâng.
Dialogue: 0,0:12:32.88,0:12:34.96,Default,,0,0,0,,Cô Hoshino, xin hãy nhận lấy.
Dialogue: 0,0:12:38.59,0:12:41.47,Default,,0,0,0,,Là Skitch và tai nghe thực tế ảo!
Dialogue: 0,0:12:42.05,0:12:44.97,Default,,0,0,0,,Đây đều là sô-cô-la thủ công!
Dialogue: 0,0:12:45.81,0:12:48.10,Default,,0,0,0,,Ôi chao…
Dialogue: 0,0:12:48.18,0:12:49.60,Default,,0,0,0,,Tôi vẫn còn nữa đây.
Dialogue: 0,0:13:01.41,0:13:03.57,Default,,0,0,0,,Chết tiệt! Cái này cực kỳ hiệu quả.
Dialogue: 0,0:13:05.91,0:13:08.58,Default,,0,0,0,,Có vẻ như những thứ này\Nđã làm cậu mãn nguyện.
Dialogue: 0,0:13:09.08,0:13:15.00,Default,,0,0,0,,{\i1}Sao, cậu ta thấy áy náy\Nvì mình nổi giận à?{\i0}
Dialogue: 0,0:13:15.09,0:13:19.01,Default,,0,0,0,,Ngoài vẻ ngoài thanh lịch của tôi,
Dialogue: 0,0:13:19.72,0:13:22.68,Default,,0,0,0,,tôi có tiền để biến ước mơ\Ncủa mọi người thành hiện thực.
Dialogue: 0,0:13:25.60,0:13:27.72,Default,,0,0,0,,{\an8}Chắc chắn cậu không thể không yêu tôi.
Dialogue: 0,0:13:27.81,0:13:30.02,Default,,0,0,0,,{\an8}Ồ, giờ lại giở trò đó với tôi.
Dialogue: 0,0:13:30.60,0:13:33.52,Default,,0,0,0,,Khoan, sao cậu biết tôi thích gì?
Dialogue: 0,0:13:33.60,0:13:35.27,Default,,0,0,0,,Trong tay tôi mọi việc đều có thể.
Dialogue: 0,0:13:35.36,0:13:36.90,Default,,0,0,0,,Trả lời đi.
Dialogue: 0,0:13:38.48,0:13:42.32,Default,,0,0,0,,{\i1}Cậu ta rất khó chịu\Nvì mình không thích cậu ta.{\i0}
Dialogue: 0,0:13:44.99,0:13:47.03,Default,,0,0,0,,- Để tôi nói cho mà nghe…\N- Thôi đi!
Dialogue: 0,0:13:47.12,0:13:50.54,Default,,0,0,0,,Anzu, ra đây nói chuyện đi!
Dialogue: 0,0:13:54.12,0:13:57.29,Default,,0,0,0,,Dù tớ đã tịch thu\Nba nhu cầu lớn nhất của cậu,
Dialogue: 0,0:13:57.38,0:14:00.55,Default,,0,0,0,,nhưng nếu trả lại quà thì bất lịch sự lắm.
Dialogue: 0,0:14:00.63,0:14:02.55,Default,,0,0,0,,Vậy nên
Dialogue: 0,0:14:03.51,0:14:05.55,Default,,0,0,0,,tớ muốn cậu nhận quà.
Dialogue: 0,0:14:05.64,0:14:07.18,Default,,0,0,0,,Cái gì? Thật sao?
Dialogue: 0,0:14:07.26,0:14:08.64,Default,,0,0,0,,Với điều kiện…
Dialogue: 0,0:14:08.72,0:14:12.02,Default,,0,0,0,,cậu dự định\Nsẽ đem lòng yêu Koganei Hijiri.
Dialogue: 0,0:14:16.86,0:14:18.77,Default,,0,0,0,,{\i1}Hẹn hò với tên nhãi đó…{\i0}
Dialogue: 0,0:14:20.65,0:14:22.95,Default,,0,0,0,,{\i1}và tất cả những món quà đó là của mình.{\i0}
Dialogue: 0,0:14:28.91,0:14:31.25,Default,,0,0,0,,Cậu nghĩ họ đang nói chuyện gì?
Dialogue: 0,0:14:31.33,0:14:33.04,Default,,0,0,0,,Không biết nữa.
Dialogue: 0,0:14:35.58,0:14:38.17,Default,,0,0,0,,Koganei phải không?
Dialogue: 0,0:14:38.25,0:14:39.63,Default,,0,0,0,,Gọi như thế thật vô lễ.
Dialogue: 0,0:14:39.71,0:14:42.09,Default,,0,0,0,,Xin lỗi, cậu Kogane.
Dialogue: 0,0:14:42.59,0:14:45.97,Default,,0,0,0,,Tớ đã nghe về vụ tai nạn…
Dialogue: 0,0:14:46.93,0:14:49.01,Default,,0,0,0,,nhưng cậu Koganei…
Dialogue: 0,0:14:50.06,0:14:53.02,Default,,0,0,0,,có thích Anzu không?
Dialogue: 0,0:14:55.73,0:14:56.60,Default,,0,0,0,,Thích?
Dialogue: 0,0:14:58.02,0:15:01.03,Default,,0,0,0,,"Thích" không phải là cảm xúc\Ntôi dành cho người khác.
Dialogue: 0,0:15:01.69,0:15:04.53,Default,,0,0,0,,Đó là cảm xúc mọi người dành cho tôi.
Dialogue: 0,0:15:05.49,0:15:06.53,Default,,0,0,0,,Vậy luôn.
Dialogue: 0,0:15:07.11,0:15:10.24,Default,,0,0,0,,Nhưng Hoshino có nói\Ncậu ta không thích tôi.
Dialogue: 0,0:15:10.95,0:15:12.33,Default,,0,0,0,,Không thể tha thứ được.
Dialogue: 0,0:15:12.83,0:15:15.54,Default,,0,0,0,,Ồ, vậy ra đó là lý do\Ncậu mang mấy thứ này đến.
Dialogue: 0,0:15:17.08,0:15:21.05,Default,,0,0,0,,Nhưng Anzu sẽ không làm bạn với cậu
Dialogue: 0,0:15:21.67,0:15:23.51,Default,,0,0,0,,chỉ vì cậu giàu hay đẹp trai.
Dialogue: 0,0:15:28.14,0:15:31.47,Default,,0,0,0,,Cậu chẳng hiểu gì về con người cả.
Dialogue: 0,0:15:32.14,0:15:35.98,Default,,0,0,0,,Cậu dàn dựng những cuộc gặp gỡ bất thường,\Nthao túng cảm xúc,
Dialogue: 0,0:15:36.06,0:15:38.06,Default,,0,0,0,,và dùng vật chất\Nđể thúc đẩy một mối quan hệ.
Dialogue: 0,0:15:41.32,0:15:42.44,Default,,0,0,0,,Đừng đánh giá thấp tôi.
Dialogue: 0,0:15:46.90,0:15:49.95,Default,,0,0,0,,- Về nhà đi. Tôi không muốn gì hết.\N- Nhưng cậu…
Dialogue: 0,0:15:50.03,0:15:52.53,Default,,0,0,0,,Xin lỗi nếu tôi làm tổn thương\Nlòng kiêu hãnh của cậu,
Dialogue: 0,0:15:53.04,0:15:55.96,Default,,0,0,0,,nhưng đi mà được người khác ưu ái đi.
Dialogue: 0,0:15:56.54,0:16:01.54,Default,,0,0,0,,Cậu cũng là con người,\Nnên cậu hiểu cảm giác của người khác mà.
Dialogue: 0,0:16:02.54,0:16:07.01,Default,,0,0,0,,Dù sao thì, mua quà\Nbằng tiền của bố mẹ là không hay đâu.
Dialogue: 0,0:16:07.09,0:16:08.97,Default,,0,0,0,,Tự mình làm ra tiền rồi hẵng khoe.
Dialogue: 0,0:16:11.55,0:16:12.55,Default,,0,0,0,,Và trên hết…
Dialogue: 0,0:16:15.10,0:16:17.98,Default,,0,0,0,,gọi Momohiki đến rồi ta nói chuyện!
Dialogue: 0,0:16:32.87,0:16:34.49,Default,,0,0,0,,Cậu có vẻ phiền lòng.
Dialogue: 0,0:16:35.79,0:16:37.12,Default,,0,0,0,,Junta…
Dialogue: 0,0:16:37.20,0:16:39.54,Default,,0,0,0,,{\i1}Nếu mình đồng ý với điều kiện của Riri,{\i0}
Dialogue: 0,0:16:39.62,0:16:42.71,Default,,0,0,0,,{\i1}nó có thể đã hóa giải ký ức\Nbị thao túng của Junta.{\i0}
Dialogue: 0,0:16:45.25,0:16:47.55,Default,,0,0,0,,Xin lỗi vì đã lôi cậu vào chuyện này.
Dialogue: 0,0:16:47.63,0:16:49.51,Default,,0,0,0,,Đừng lo cho tớ.
Dialogue: 0,0:16:50.93,0:16:53.51,Default,,0,0,0,,Tớ muốn được giúp đỡ những lúc cậu cần.
Dialogue: 0,0:16:58.10,0:17:00.02,Default,,0,0,0,,{\i1}Cậu ấy tốt bụng đến mức đau lòng.{\i0}
Dialogue: 0,0:17:03.98,0:17:06.90,Default,,0,0,0,,Anzu, sao lại chơi với cậu ta?
Dialogue: 0,0:17:07.53,0:17:09.61,Default,,0,0,0,,Bọn tớ sẽ không để cậu chơi các game mới.
Dialogue: 0,0:17:11.36,0:17:13.03,Default,,0,0,0,,Cái gì? Thật nhỏ nhen.
Dialogue: 0,0:17:13.99,0:17:17.62,Default,,0,0,0,,- Cậu chắc chứ?\N- Không sao, họ chỉ giỏi nói thôi.
Dialogue: 0,0:17:19.04,0:17:21.29,Default,,0,0,0,,Ta có kế hoạch trước rồi mà.
Dialogue: 0,0:17:22.62,0:17:24.71,Default,,0,0,0,,Sao lại đuổi cậu ấy đi?
Dialogue: 0,0:17:24.79,0:17:26.55,Default,,0,0,0,,Cậu mới nên rời đi trước tiên ấy.
Dialogue: 0,0:17:26.63,0:17:28.21,Default,,0,0,0,,Xấu tính quá!
Dialogue: 0,0:17:29.63,0:17:31.38,Default,,0,0,0,,{\an8}BÁNH VÒNG PHÁP\NBÁNH VÒNG XOẮN
Dialogue: 0,0:17:31.47,0:17:32.55,Default,,0,0,0,,{\an8}SÔ-CÔ-LA TRUYỀN THỐNG
Dialogue: 0,0:17:32.63,0:17:33.93,Default,,0,0,0,,Mệt quá.
Dialogue: 0,0:17:34.01,0:17:37.60,Default,,0,0,0,,Hoshino, từ hôm nay đây là\Nnhân viên mới của chúng ta.
Dialogue: 0,0:17:37.68,0:17:38.72,Default,,0,0,0,,À, vâng.
Dialogue: 0,0:17:41.89,0:17:43.40,Default,,0,0,0,,Cậu ấy là Koganei.
Dialogue: 0,0:17:45.19,0:17:48.44,Default,,0,0,0,,Tôi đến đây để học hỏi. Chắc chắn\Ncậu không có vấn đề gì với việc đó.
Dialogue: 0,0:17:48.53,0:17:50.44,Default,,0,0,0,,{\an8}CỬA HÀNG TIỆN LỢI\NHỘI CHỢ ĐỒ NGỌT THEO MÙA
Dialogue: 0,0:17:51.32,0:17:52.40,Default,,0,0,0,,Cảm ơn vì đã đến.
Dialogue: 0,0:17:56.58,0:17:57.95,Default,,0,0,0,,Tôi rất biết ơn.
Dialogue: 0,0:18:00.16,0:18:01.08,Default,,0,0,0,,Lần sau lại ghé nhé.
Dialogue: 0,0:18:01.66,0:18:03.75,Default,,0,0,0,,Này!
Dialogue: 0,0:18:03.83,0:18:05.96,Default,,0,0,0,,Cậu đang đứng từ nơi nào nhìn xuống vậy?
Dialogue: 0,0:18:06.04,0:18:07.75,Default,,0,0,0,,Xin lỗi, tôi còn cao hơn cả núi.
Dialogue: 0,0:18:08.42,0:18:09.76,Default,,0,0,0,,Ra vẻ bề trên vũ trụ à!
Dialogue: 0,0:18:09.84,0:18:12.30,Default,,0,0,0,,Đây không phải chăm sóc khách hàng!
Dialogue: 0,0:18:12.93,0:18:13.76,Default,,0,0,0,,Đúng đó.
Dialogue: 0,0:18:14.34,0:18:15.76,Default,,0,0,0,,Sau câu "Lần sau lại ghé nhé",
Dialogue: 0,0:18:15.84,0:18:19.26,Default,,0,0,0,,thử nói "Không phải tôi\Nđang đợi gặp lại bạn đâu" đi.
Dialogue: 0,0:18:19.35,0:18:21.77,Default,,0,0,0,,Đừng biến cậu ta thành {\i1}tsundere{\i0}!
Dialogue: 0,0:18:23.06,0:18:25.56,Default,,0,0,0,,Quản lý, làm ơn nói thế là không được đi.
Dialogue: 0,0:18:26.11,0:18:27.77,Default,,0,0,0,,Nhưng mà…
Dialogue: 0,0:18:28.90,0:18:30.90,Default,,0,0,0,,- Có cần hâm nóng thức ăn không ạ?\N- Có…
Dialogue: 0,0:18:30.98,0:18:34.49,Default,,0,0,0,,Kỳ lạ là khách hàng đổ xô đến chỗ cậu ấy.
Dialogue: 0,0:18:34.57,0:18:36.07,Default,,0,0,0,,Nhưng không một ai phàn nàn.
Dialogue: 0,0:18:36.16,0:18:38.33,Default,,0,0,0,,Cậu ta không quan tâm\Nfan của mình là ai sao?
Dialogue: 0,0:18:40.70,0:18:44.21,Default,,0,0,0,,{\an8}Hijiri đã trở thành hoàng tử\Ncửa hàng tiện lợi nổi tiếng!
Dialogue: 0,0:18:44.29,0:18:48.71,Default,,0,0,0,,{\an8}Ảnh cậu ấy lan truyền rất nhanh trên mạng\Nvới hashtag #hoangtucuahangtienloi…
Dialogue: 0,0:18:48.79,0:18:50.00,Default,,0,0,0,,HỘI CHỢ ĐỒ NGỌT THEO MÙA
Dialogue: 0,0:18:50.09,0:18:52.71,Default,,0,0,0,,…làm gia tăng lượng khách lui tới!
Dialogue: 0,0:18:58.30,0:19:00.31,Default,,0,0,0,,CÓ TẠI TẤT CẢ CÁC CỬA HÀNG
Dialogue: 0,0:19:00.39,0:19:04.23,Default,,0,0,0,,HƠN 30 LOẠI BÁNH MỚI VÀ PHỔ BIẾN!
Dialogue: 0,0:19:05.23,0:19:07.23,Default,,0,0,0,,Tiền thừa đây. Lần sau lại ghé nhé.
Dialogue: 0,0:19:07.31,0:19:08.31,Default,,0,0,0,,Vâng.
Dialogue: 0,0:19:10.32,0:19:13.82,Default,,0,0,0,,{\i1}Có lẽ cậu ta như vậy\Nvì những người xung quanh{\i0}
Dialogue: 0,0:19:13.90,0:19:15.74,Default,,0,0,0,,{\i1}rất chiều chuộng cậu ta.{\i0}
Dialogue: 0,0:19:16.45,0:19:19.58,Default,,0,0,0,,{\i1}Nhưng cậu ta tiếp thu rất nhanh,{\i0}
Dialogue: 0,0:19:19.66,0:19:21.66,Default,,0,0,0,,{\i1}và còn làm rất nhiều ca.{\i0}
Dialogue: 0,0:19:21.74,0:19:23.75,Default,,0,0,0,,{\i1}- Cậu ta chăm chỉ hơn mình nghĩ.{\i0}\N- Chào mừng.
Dialogue: 0,0:19:25.41,0:19:27.21,Default,,0,0,0,,- Mọi người nghỉ ngơi đi.\N- Vâng.
Dialogue: 0,0:19:29.25,0:19:31.25,Default,,0,0,0,,Hoàng tử đang nghỉ sao?
Dialogue: 0,0:19:31.88,0:19:33.46,Default,,0,0,0,,Tôi rất xin lỗi.
Dialogue: 0,0:19:34.34,0:19:37.26,Default,,0,0,0,,CỬA HÀNG TIỆN LỢI
Dialogue: 0,0:19:39.85,0:19:41.43,Default,,0,0,0,,Mình kiệt sức rồi.
Dialogue: 0,0:19:42.85,0:19:43.85,Default,,0,0,0,,Ông Tsuchiya.
Dialogue: 0,0:19:46.52,0:19:47.90,Default,,0,0,0,,Hôm nay cô vất vả rồi.
Dialogue: 0,0:19:47.98,0:19:50.40,Default,,0,0,0,,Hijiri sắp xong rồi.
Dialogue: 0,0:19:53.07,0:19:54.03,Default,,0,0,0,,Cô Hoshino,
Dialogue: 0,0:19:54.53,0:19:58.11,Default,,0,0,0,,thật không biết phải cảm ơn cô thế nào\Nvì đã thay đổi cậu ấy thế này.
Dialogue: 0,0:19:58.78,0:19:59.78,Default,,0,0,0,,Sao ạ?
Dialogue: 0,0:20:00.95,0:20:05.41,Default,,0,0,0,,Cậu chủ Hijiri đã đi học ở ngôi trường\Nđảm bảo cho tương lai của mình,
Dialogue: 0,0:20:05.50,0:20:09.79,Default,,0,0,0,,nhưng bố cậu ấy lại sắp xếp\Nchuyển cậu ấy sang trường công.
Dialogue: 0,0:20:09.88,0:20:11.04,Default,,0,0,0,,Vâng.
Dialogue: 0,0:20:11.13,0:20:12.96,Default,,0,0,0,,Vì quen được cưng chiều,
Dialogue: 0,0:20:13.05,0:20:16.22,Default,,0,0,0,,cậu ấy vẫn luôn muốn gì có đó.
Dialogue: 0,0:20:16.30,0:20:18.97,Default,,0,0,0,,Do đó, cậu ấy rất hay cư xử\Nkhông đúng lẽ thường.
Dialogue: 0,0:20:20.59,0:20:22.93,Default,,0,0,0,,Bố cậu ấy vì lo lắng\Nvề sự thiếu kết nối này,
Dialogue: 0,0:20:23.01,0:20:28.31,Default,,0,0,0,,đã để cậu ấy học một cách bình thường\Nở một ngôi trường bình thường.
Dialogue: 0,0:20:28.39,0:20:33.82,Default,,0,0,0,,{\i1}Tuy nhiên, sức hút bẩm sinh của cậu ấy\Nđã làm lu mờ sự bình thường.{\i0}
Dialogue: 0,0:20:34.90,0:20:35.82,Default,,0,0,0,,Ra là vậy.
Dialogue: 0,0:20:36.53,0:20:40.82,Default,,0,0,0,,Tuy nhiên, vì cô đã thẳng thắn với cậu ấy…
Dialogue: 0,0:20:40.91,0:20:43.70,Default,,0,0,0,,Đầu tiên, nhấn nút ở góc bên phải…
Dialogue: 0,0:20:43.78,0:20:46.04,Default,,0,0,0,,- Tiếp theo, nhấn…\N{\i1}- Cậu chủ Hijiri{\i0}
Dialogue: 0,0:20:46.12,0:20:49.08,Default,,0,0,0,,{\i1}bắt đầu quan tâm đến\Nnhững điều bình thường.{\i0}
Dialogue: 0,0:20:51.08,0:20:53.04,Default,,0,0,0,,Tất cả là nhờ có cô Hoshino.
Dialogue: 0,0:20:53.13,0:20:54.59,Default,,0,0,0,,Cảm ơn rất nhiều.
Dialogue: 0,0:20:54.67,0:20:56.51,Default,,0,0,0,,Ôi, tôi đâu có…
Dialogue: 0,0:21:01.18,0:21:03.60,Default,,0,0,0,,NGÂN HÀNG NARIKIN
Dialogue: 0,0:21:03.68,0:21:06.10,Default,,0,0,0,,{\an8}SỔ TIẾT KIỆM THÔNG THƯỜNG
Dialogue: 0,0:21:06.68,0:21:08.56,Default,,0,0,0,,{\an8}Lương của mình!
Dialogue: 0,0:21:09.14,0:21:12.35,Default,,0,0,0,,Cuối cùng cũng đến! Mình nên mua gì đây?
Dialogue: 0,0:21:14.40,0:21:15.40,Default,,0,0,0,,Hoshino.
Dialogue: 0,0:21:19.32,0:21:22.07,Default,,0,0,0,,Hijiri! Hôm nay cậu đâu có đi làm!
Dialogue: 0,0:21:22.16,0:21:23.87,Default,,0,0,0,,Đừng bám theo tôi nữa.
Dialogue: 0,0:21:23.95,0:21:27.33,Default,,0,0,0,,Thật tự phụ. Tôi tình cờ gặp cậu thôi.
Dialogue: 0,0:21:28.00,0:21:29.75,Default,,0,0,0,,Hôm nay tôi vừa nhận lương.
Dialogue: 0,0:21:30.25,0:21:32.54,Default,,0,0,0,,Giờ cho tôi biết cậu muốn gì đi.
Dialogue: 0,0:21:33.21,0:21:34.04,Default,,0,0,0,,Hả?
Dialogue: 0,0:21:34.13,0:21:36.88,Default,,0,0,0,,Tôi không đi làm nhiều ngày\Nnên cũng không có gì nhiều.
Dialogue: 0,0:21:36.96,0:21:39.55,Default,,0,0,0,,Nhưng tôi chắc là đủ để thỏa mãn\Nmột thường dân như cậu.
Dialogue: 0,0:21:40.51,0:21:42.55,Default,,0,0,0,,Đó là tiền tôi tự kiếm được.
Dialogue: 0,0:21:43.55,0:21:45.55,Default,,0,0,0,,Nhưng đừng hiểu lầm tôi.
Dialogue: 0,0:21:49.39,0:21:51.85,Default,,0,0,0,,Tôi không làm tất cả\Nnhững việc này vì cậu đâu.
Dialogue: 0,0:21:52.48,0:21:55.44,Default,,0,0,0,,{\i1}Giờ cậu ta hoàn toàn là một{\i0} tsundere{\i1}!{\i0}
Dialogue: 0,0:21:56.11,0:21:57.11,Default,,0,0,0,,Cậu muốn gì?
Dialogue: 0,0:21:57.19,0:22:00.28,Default,,0,0,0,,- Túi xách hay giày dép?\N- Không.
Dialogue: 0,0:22:00.36,0:22:02.45,Default,,0,0,0,,- Trang sức thì sao?\N- Mấy cái đó cũng không.
Dialogue: 0,0:22:02.53,0:22:05.03,Default,,0,0,0,,- Cậu thích hẹn hò với tôi…\N- Im đi.
Dialogue: 0,0:22:06.12,0:22:08.87,Default,,0,0,0,,{\i1}Mình muốn nói với cậu ấy\Nlà mình không muốn gì cả…{\i0}
Dialogue: 0,0:22:16.96,0:22:18.84,Default,,0,0,0,,Có một thứ cậu có thể tặng tôi.
Dialogue: 0,0:22:25.51,0:22:27.05,Default,,0,0,0,,Cái gì thế?
Dialogue: 0,0:22:27.14,0:22:29.39,Default,,0,0,0,,Kem. Cậu chưa từng ăn phải không?
Dialogue: 0,0:22:30.14,0:22:33.19,Default,,0,0,0,,Rẻ đến nực cười, kể cả đối với thường dân.
Dialogue: 0,0:22:35.31,0:22:36.90,Default,,0,0,0,,Nửa của cậu đây.
Dialogue: 0,0:22:40.11,0:22:41.49,Default,,0,0,0,,Ăn thôi.
Dialogue: 0,0:22:43.03,0:22:44.49,Default,,0,0,0,,Cậu muốn thế này thôi sao?
Dialogue: 0,0:22:45.49,0:22:48.49,Default,,0,0,0,,Bạn bè chỉ tặng nhau thế này thôi là được.
Dialogue: 0,0:22:56.71,0:22:57.75,Default,,0,0,0,,Thế nào?
Dialogue: 0,0:22:59.13,0:23:01.34,Default,,0,0,0,,Mùi vị rất rẻ tiền.
Dialogue: 0,0:23:03.01,0:23:05.34,Default,,0,0,0,,Nhưng không tệ đến thế.
Dialogue: 0,0:23:11.97,0:23:12.81,Default,,0,0,0,,Sao vậy?
Dialogue: 0,0:23:13.31,0:23:15.39,Default,,0,0,0,,Tôi vừa mới tỉnh táo lại.
Dialogue: 0,0:23:19.36,0:23:20.98,Default,,0,0,0,,{\i1}Mình sẽ không mất cảnh giác nữa.{\i0}
Dialogue: 0,0:23:31.79,0:23:33.33,Default,,0,0,0,,Tớ về rồi.
Dialogue: 0,0:23:38.42,0:23:39.38,Default,,0,0,0,,TIN NHẮN MỚI
Dialogue: 0,0:23:39.46,0:23:40.96,Default,,0,0,0,,{\i1}Là điện thoại của Kazuki…{\i0}
Dialogue: 0,0:23:41.04,0:23:42.34,Default,,0,0,0,,ARISA:\NTHỨ BẢY NÀY GẶP NHÉ?
Dialogue: 0,0:23:43.76,0:23:46.01,Default,,0,0,0,,{\i1}Từ một cô gái!{\i0}
Dialogue: 0,0:23:48.80,0:23:50.30,Default,,0,0,0,,Vỗ tay!
Dialogue: 0,0:23:50.39,0:23:52.64,Default,,0,0,0,,Chúc mừng!
Dialogue: 0,0:23:52.72,0:23:58.06,Default,,0,0,0,,Cá là cậu hứng thú với diễn biến sau đó,\Nkhông thể bỏ qua đoạn này đâu nhé!
Dialogue: 0,0:23:58.15,0:24:01.82,Default,,0,0,0,,Ta sống trong thời đại muốn gì xem đó.
Dialogue: 0,0:24:01.90,0:24:05.49,Default,,0,0,0,,Nhưng ta đã mất gì trong quá trình trên?
Dialogue: 0,0:24:05.57,0:24:06.95,Default,,0,0,0,,Đừng nói không muốn thay đổi.
Dialogue: 0,0:24:07.03,0:24:09.61,Default,,0,0,0,,Hãy phiêu lưu và sống một\Ncuộc đời hạnh phúc, lấp lánh!
Dialogue: 0,0:24:09.70,0:24:11.62,Default,,0,0,0,,Vì lương của tớ cả thôi.
Dialogue: 0,0:24:13.95,0:24:14.79,Default,,0,0,0,,{\i1}Ah, yeah!{\i0}
Dialogue: 0,0:24:17.41,0:24:18.25,Default,,0,0,0,,{\an8\i1}Let's go!{\i0}
Dialogue: 0,0:24:20.79,0:24:21.92,Default,,0,0,0,,{\an8\i1}Lo-love!{\i0}
Dialogue: 0,0:24:24.00,0:24:24.84,Default,,0,0,0,,{\an8\i1}Here we go!{\i0}
Dialogue: 0,0:24:24.92,0:24:28.13,Default,,0,0,0,,{\an8\i1}Xin lỗi vì đã ép cậu{\i0}
Dialogue: 0,0:24:28.22,0:24:31.39,Default,,0,0,0,,{\an8\i1}Nhưng tớ hứa cậu sẽ tận hưởng\NMột tương lai tuyệt vời{\i0}
Dialogue: 0,0:24:31.47,0:24:38.10,Default,,0,0,0,,{\an8\i1}Không, không phải ba khao khát lớn của cậu\NGame, sô-cô-la và mèo{\i0}
Dialogue: 0,0:24:38.19,0:24:41.02,Default,,0,0,0,,{\an8}Tôi sẽ không bao giờ đầu hàng\Ntrước đám trai đẹp này!
Dialogue: 0,0:24:41.10,0:24:44.48,Default,,0,0,0,,{\an8}Giờ cậu nói thế thôi,\Nnhưng tớ biết rồi cậu sẽ bỏ cuộc!
Dialogue: 0,0:24:44.57,0:24:46.19,Default,,0,0,0,,{\i1}Cậu cũng thế!{\i0}
Dialogue: 0,0:24:46.28,0:24:47.94,Default,,0,0,0,,{\i1}Tớ biết tim cậu đang đập rất nhanh!{\i0}
Dialogue: 0,0:24:48.03,0:24:50.57,Default,,0,0,0,,{\i1}Yêu, không ai có thể ngăn cản tình yêu!{\i0}
Dialogue: 0,0:24:50.66,0:24:53.16,Default,,0,0,0,,{\an8\i1}Thôi nào, cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:24:53.24,0:24:54.45,Default,,0,0,0,,{\an8\i1}Thừa nhận đi{\i0}
Dialogue: 0,0:24:54.53,0:24:56.54,Default,,0,0,0,,{\i1}Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:24:56.62,0:24:57.83,Default,,0,0,0,,{\i1}Đừng cứng đầu nữa{\i0}
Dialogue: 0,0:24:57.91,0:24:59.75,Default,,0,0,0,,{\i1}Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:24:59.83,0:25:04.00,Default,,0,0,0,,{\i1}Cậu không thể né tránh trai đẹp mãi{\i0}
Dialogue: 0,0:25:04.09,0:25:06.13,Default,,0,0,0,,{\i1}Thôi nào! Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:25:06.21,0:25:07.67,Default,,0,0,0,,{\i1}Cứ để đó cho tớ{\i0}
Dialogue: 0,0:25:07.76,0:25:09.80,Default,,0,0,0,,{\i1}Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:25:09.88,0:25:10.97,Default,,0,0,0,,{\i1}Nào nhận thua đi{\i0}
Dialogue: 0,0:25:11.05,0:25:13.05,Default,,0,0,0,,{\i1}Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:25:13.14,0:25:17.93,Default,,0,0,0,,{\an8\i1}Cậu không thể né tránh trai đẹp mãi{\i0}
Dialogue: 0,0:25:18.02,0:25:19.27,Default,,0,0,0,,{\an8\i1}Ôm lấy tớ, ôm thật chặt{\i0}
Dialogue: 0,0:25:19.35,0:25:20.98,Default,,0,0,0,,{\an8\i1}Giải phóng phần hoang dại trong cậu{\i0}
Dialogue: 0,0:25:21.06,0:25:22.56,Default,,0,0,0,,{\an8\i1}Dấu hiệu tình yêu chỉ cậu nhận ra{\i0}
Dialogue: 0,0:25:22.65,0:25:25.52,Default,,0,0,0,,{\an8\i1}Lãng mạn lên nào!{\i0}
