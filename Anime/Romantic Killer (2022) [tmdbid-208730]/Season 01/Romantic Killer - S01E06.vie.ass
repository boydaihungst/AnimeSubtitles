Dialogue: 0,0:00:09.01,0:00:11.93,Default,,0,0,0,,LOẠT PHIM NETFLIX
Dialogue: 0,0:00:15.39,0:00:18.44,Default,,0,0,0,,{\i1}Cuộc sống chung đáng yêu của Anzu…{\i0}
Dialogue: 0,0:00:19.02,0:00:21.44,Default,,0,0,0,,Mong mọi người chiếu cố.
Dialogue: 0,0:00:22.15,0:00:26.69,Default,,0,0,0,,{\i1}Hayami Junta, một chàng trai thể thao,\Nnóng bỏng, đã bước vào trận đấu!{\i0}
Dialogue: 0,0:00:27.32,0:00:29.90,Default,,0,0,0,,Nhà vệ sinh ở cuối hành lang.
Dialogue: 0,0:00:30.95,0:00:34.37,Default,,0,0,0,,{\i1}Một cuộc sống hệt như mơ.{\i0}
Dialogue: 0,0:00:34.99,0:00:36.37,Default,,0,0,0,,À, còn nữa.
Dialogue: 0,0:00:36.45,0:00:38.83,Default,,0,0,0,,Có hai giường trong phòng ngủ chính.
Dialogue: 0,0:00:38.91,0:00:39.96,Default,,0,0,0,,Các cậu muốn ngủ chung…
Dialogue: 0,0:00:40.04,0:00:41.17,Default,,0,0,0,,- Không đời nào.\N- Không đời nào.
Dialogue: 0,0:00:41.25,0:00:42.79,Default,,0,0,0,,Cũng phải…
Dialogue: 0,0:00:43.29,0:00:46.55,Default,,0,0,0,,{\i1}Tình hình sẽ leo thang nhanh thôi!{\i0}
Dialogue: 0,0:00:47.26,0:00:51.63,Default,,0,0,0,,Vậy Kazuki chuyển vào\Nthư phòng của bố tớ nhé.
Dialogue: 0,0:00:51.72,0:00:53.51,Default,,0,0,0,,Thế cũng được.
Dialogue: 0,0:00:53.60,0:00:55.93,Default,,0,0,0,,Tớ có thể dùng bàn trong phòng đó.
Dialogue: 0,0:00:58.52,0:01:00.39,Default,,0,0,0,,{\an8}THỨ BỐ THÍCH
Dialogue: 0,0:01:00.48,0:01:03.48,Default,,0,0,0,,{\i1}Nơi này cứ như lâu đài tình yêu vậy!{\i0}
Dialogue: 0,0:01:05.32,0:01:06.27,Default,,0,0,0,,Tớ…
Dialogue: 0,0:01:07.82,0:01:11.11,Default,,0,0,0,,{\i1}Mình ngại đến nỗi\Nkhông dám nhìn mặt cậu ấy!{\i0}
Dialogue: 0,0:01:12.11,0:01:16.45,Default,,0,0,0,,Thôi, tớ đi tập đây.\NCần gì thì cứ gọi nhé.
Dialogue: 0,0:01:16.53,0:01:19.00,Default,,0,0,0,,Ừ. Tớ nghĩ mình sẽ ổn thôi.
Dialogue: 0,0:01:19.08,0:01:20.16,Default,,0,0,0,,Hẹn gặp lại.
Dialogue: 0,0:01:24.25,0:01:26.71,Default,,0,0,0,,Không ngờ lại thành ra thế này.
Dialogue: 0,0:01:27.50,0:01:30.38,Default,,0,0,0,,Chà. Cuộc sống thật vui vẻ làm sao!
Dialogue: 0,0:01:30.47,0:01:32.80,Default,,0,0,0,,Cậu đã gài tên biến thái đó vào nhà tôi!
Dialogue: 0,0:01:32.88,0:01:34.47,Default,,0,0,0,,Sao cậu biết…
Dialogue: 0,0:01:39.39,0:01:42.77,Default,,0,0,0,,Sao mẹ lại thoải mái\Nvề mọi chuyện đến vậy?
Dialogue: 0,0:01:42.85,0:01:44.44,Default,,0,0,0,,Ai đó trộm đồ lót của mẹ sao?
Dialogue: 0,0:01:44.52,0:01:46.98,Default,,0,0,0,,Tự nhiên thấy mình trẻ hẳn ra.
Dialogue: 0,0:01:48.19,0:01:50.03,Default,,0,0,0,,Nhưng chẳng sao cả.
Dialogue: 0,0:01:50.94,0:01:53.91,Default,,0,0,0,,{\i1}Mình được nhận vào làm\Nở cửa hàng tiện lợi gần đây!{\i0}
Dialogue: 0,0:01:54.49,0:01:55.95,Default,,0,0,0,,Chào mừng quý khách.
Dialogue: 0,0:01:57.28,0:01:59.95,Default,,0,0,0,,{\an8\i1}Kazuki đi làm, Junta thì luyện tập.{\i0}
Dialogue: 0,0:02:00.04,0:02:02.54,Default,,0,0,0,,{\an8\i1}Sẽ không có quá nhiều thời gian bên nhau.{\i0}
Dialogue: 0,0:03:34.09,0:03:35.38,Default,,0,0,0,,{\an8}#6 CUỘC HẸN\N"CHUYỂN SINH Ở THẾ GIỚI KHÁC"
Dialogue: 0,0:03:35.47,0:03:36.30,Default,,0,0,0,,{\an8\i1}Chào buổi sáng.{\i0}
Dialogue: 0,0:03:36.88,0:03:39.01,Default,,0,0,0,,{\an8}- Chào.\N- Chào buổi sáng.
Dialogue: 0,0:03:40.01,0:03:42.64,Default,,0,0,0,,- Anzu, hôm nay cậu nấu cơm hộp à?\N- Đúng vậy.
Dialogue: 0,0:03:42.72,0:03:44.64,Default,,0,0,0,,Ai đó cứ cằn nhằn tớ mãi.
Dialogue: 0,0:03:44.72,0:03:46.39,Default,,0,0,0,,Giờ ai mới là người cằn nhằn đây?
Dialogue: 0,0:03:46.48,0:03:52.07,Default,,0,0,0,,Có tận ba hộp cơm trưa nên thỉnh thoảng\Ntớ cũng phải giúp một tay.
Dialogue: 0,0:03:55.49,0:03:58.32,Default,,0,0,0,,Đừng ngủ trên xà lách!
Dialogue: 0,0:03:58.82,0:04:00.87,Default,,0,0,0,,Tớ xem được không?
Dialogue: 0,0:04:00.95,0:04:02.99,Default,,0,0,0,,Thế là bảo vệ quá mức rồi!
Dialogue: 0,0:04:03.08,0:04:06.12,Default,,0,0,0,,- Ai cũng lo khi cậu nấu ăn.\N- Tớ vô vọng đến vậy sao?
Dialogue: 0,0:04:06.62,0:04:09.46,Default,,0,0,0,,Đầu tiên, tớ sẽ luộc mì.
Dialogue: 0,0:04:09.54,0:04:12.46,Default,,0,0,0,,- Đó là đũa mà.\N- Ôi không!
Dialogue: 0,0:04:12.54,0:04:15.80,Default,,0,0,0,,- Xúc xích cháy rồi.\N- Chết tiệt!
Dialogue: 0,0:04:15.88,0:04:17.30,Default,,0,0,0,,Đừng đập trứng vào đầu.
Dialogue: 0,0:04:17.38,0:04:19.47,Default,,0,0,0,,- Chết tiệt!\N- Đã bảo mà.
Dialogue: 0,0:04:27.52,0:04:30.90,Default,,0,0,0,,Bữa trưa của cậu từng trông rất ngon.
Dialogue: 0,0:04:30.98,0:04:32.65,Default,,0,0,0,,- Sao hôm nay trông kinh quá.\N- Hả?
Dialogue: 0,0:04:33.65,0:04:35.86,Default,,0,0,0,,Linh cảm mách bảo tớ rằng
Dialogue: 0,0:04:35.94,0:04:38.90,Default,,0,0,0,,cậu đã nhờ bạn thời thơ ấu làm cho!
Dialogue: 0,0:04:38.99,0:04:42.07,Default,,0,0,0,,Không, là em trai tớ nấu đấy!
Dialogue: 0,0:04:42.16,0:04:44.45,Default,,0,0,0,,Cậu vừa nói lắp! Còn đáng nghi hơn!
Dialogue: 0,0:04:44.53,0:04:47.08,Default,,0,0,0,,Sao số cậu may thế?
Dialogue: 0,0:04:47.16,0:04:49.83,Default,,0,0,0,,Trông cậu ấy có vẻ\Nkhông thích nấu ăn chút nào!
Dialogue: 0,0:04:49.91,0:04:51.62,Default,,0,0,0,,Đây không phải thành công.
Dialogue: 0,0:04:51.71,0:04:53.92,Default,,0,0,0,,Là em trai tớ nấu thật đấy!
Dialogue: 0,0:04:55.00,0:04:57.71,Default,,0,0,0,,Bữa trưa nhà làm.
Dialogue: 0,0:04:57.80,0:04:59.92,Default,,0,0,0,,Cậu ấy đang hẹn hò với ai à?
Dialogue: 0,0:05:06.89,0:05:12.31,Default,,0,0,0,,Xin hỏi! Sao cậu lại chụp ảnh\Nhộp cơm trưa do em trai làm vậy?
Dialogue: 0,0:05:12.40,0:05:16.44,Default,,0,0,0,,- Chắc chắn có điều mờ ám.\N- Biến giùm đi!
Dialogue: 0,0:05:16.52,0:05:17.44,Default,,0,0,0,,THỊT HẦM\NXIÊN QUE
Dialogue: 0,0:05:17.53,0:05:18.94,Default,,0,0,0,,{\i1}Cảm ơn vì hôm nay.{\i0}
Dialogue: 0,0:05:19.03,0:05:21.95,Default,,0,0,0,,Kazuki, cháu thật sự\Nkhông muốn ra quầy hả?
Dialogue: 0,0:05:22.03,0:05:24.62,Default,,0,0,0,,Khách hàng sẽ thích lắm đấy!
Dialogue: 0,0:05:24.70,0:05:27.54,Default,,0,0,0,,- Không ạ, cháu cảm ơn.\N- Biết ngay mà.
Dialogue: 0,0:05:32.42,0:05:34.92,Default,,0,0,0,,Kazuki, chờ đã.
Dialogue: 0,0:05:35.00,0:05:37.42,Default,,0,0,0,,Quản lý muốn cậu phục vụ bàn.
Dialogue: 0,0:05:37.50,0:05:40.05,Default,,0,0,0,,Cậu mà có nhiều người hâm mộ hơn\Nthì sẽ phiền lắm luôn!
Dialogue: 0,0:05:40.13,0:05:43.05,Default,,0,0,0,,Kazuki này, ta đi ăn gì đó nhé?
Dialogue: 0,0:05:43.13,0:05:45.55,Default,,0,0,0,,Gần ga tàu có quán cà phê mới mở.
Dialogue: 0,0:05:48.22,0:05:49.14,Default,,0,0,0,,Tớ mệt rồi.
Dialogue: 0,0:05:50.60,0:05:52.31,Default,,0,0,0,,Nhưng quán cà phê…
Dialogue: 0,0:06:00.94,0:06:02.57,Default,,0,0,0,,Kazuki, cậu về muộn thế!
Dialogue: 0,0:06:03.15,0:06:04.57,Default,,0,0,0,,Đến giờ xem chương trình rồi!
Dialogue: 0,0:06:04.66,0:06:07.08,Default,,0,0,0,,Này, tớ vừa về thôi mà!
Dialogue: 0,0:06:07.16,0:06:10.33,Default,,0,0,0,,Cậu nói sẽ xem\Nchương trình Saki giới thiệu còn gì!
Dialogue: 0,0:06:11.66,0:06:13.25,Default,,0,0,0,,Mau đi tắm đi!
Dialogue: 0,0:06:13.87,0:06:16.50,Default,,0,0,0,,Đừng lâu hơn mười phút, tớ sẽ ngủ gật mất.
Dialogue: 0,0:06:16.58,0:06:18.34,Default,,0,0,0,,Các cậu xem mà không có tớ đi.
Dialogue: 0,0:06:18.42,0:06:20.63,Default,,0,0,0,,- Thế thì có gì vui?\N- Thế thì có gì vui?
Dialogue: 0,0:06:21.13,0:06:22.05,Default,,0,0,0,,Đúng không?
Dialogue: 0,0:06:22.13,0:06:23.55,Default,,0,0,0,,Ừ.
Dialogue: 0,0:06:23.63,0:06:25.26,Default,,0,0,0,,{\i1}Hai đứa mình vừa nói cùng lúc.{\i0}
Dialogue: 0,0:06:34.31,0:06:35.98,Default,,0,0,0,,{\i1}- Tớ đi đây.\N- Ừ.{\i0}
Dialogue: 0,0:06:36.06,0:06:38.31,Default,,0,0,0,,{\i1}Tập luyện thật tốt nhé.{\i0}
Dialogue: 0,0:06:43.03,0:06:44.32,Default,,0,0,0,,Hôm nay cậu rảnh không?
Dialogue: 0,0:06:44.40,0:06:45.53,Default,,0,0,0,,Hả?
Dialogue: 0,0:06:46.49,0:06:47.82,Default,,0,0,0,,Thế là rảnh rồi.
Dialogue: 0,0:06:47.91,0:06:49.95,Default,,0,0,0,,Tớ không có nhiều đồ mùa hè.
Dialogue: 0,0:06:50.03,0:06:51.83,Default,,0,0,0,,Cậu đi mua với tớ được không?
Dialogue: 0,0:06:51.91,0:06:54.08,Default,,0,0,0,,Ừ, được thôi.
Dialogue: 0,0:06:54.58,0:06:55.92,Default,,0,0,0,,Sao cậu không rủ Makoto?
Dialogue: 0,0:06:56.00,0:06:58.88,Default,,0,0,0,,{\i1}- Cậu ấy bận việc riêng.\N- Ra vậy.{\i0}
Dialogue: 0,0:06:59.46,0:07:02.63,Default,,0,0,0,,Mà cậu ngại đi mua sắm một mình sao?
Dialogue: 0,0:07:02.71,0:07:05.34,Default,,0,0,0,,Cậu là vỏ bọc giúp tớ tránh\Nsự chú ý không mong muốn.
Dialogue: 0,0:07:05.42,0:07:08.26,Default,,0,0,0,,Tớ hiểu rồi. Đẹp trai lắm lúc cũng khổ.
Dialogue: 0,0:07:09.47,0:07:13.72,Default,,0,0,0,,Nhưng tớ mua quần áo trên mạng,\Nnên không biết cửa hàng nào cả.
Dialogue: 0,0:07:13.81,0:07:15.73,Default,,0,0,0,,Tớ biết vài chỗ được lắm.
Dialogue: 0,0:07:15.81,0:07:18.94,Default,,0,0,0,,Sao cậu không mua quần áo trên mạng?
Dialogue: 0,0:07:20.73,0:07:22.07,Default,,0,0,0,,Tớ không thích mua qua mạng.
Dialogue: 0,0:07:23.23,0:07:24.40,Default,,0,0,0,,Vậy sao.
Dialogue: 0,0:07:26.45,0:07:28.61,Default,,0,0,0,,Tớ sẽ đi thay đồ, chờ chút.
Dialogue: 0,0:07:31.28,0:07:33.20,Default,,0,0,0,,- Xong rồi.\N- Nhanh thế!
Dialogue: 0,0:07:33.29,0:07:37.50,Default,,0,0,0,,KHÓ ĐỠ
Dialogue: 0,0:07:37.58,0:07:39.54,Default,,0,0,0,,Cậu chỉ thay quần thôi mà.
Dialogue: 0,0:07:40.67,0:07:43.21,Default,,0,0,0,,Thì sao? Áo dễ thương mà.
Dialogue: 0,0:07:43.30,0:07:45.30,Default,,0,0,0,,Ta đâu phải đi cửa hàng tiện lợi.
Dialogue: 0,0:07:45.38,0:07:47.59,Default,,0,0,0,,Quần bò cũng được, nhưng chọn áo khác đi.
Dialogue: 0,0:07:47.68,0:07:48.84,Default,,0,0,0,,Cái này!
Dialogue: 0,0:07:48.93,0:07:50.72,Default,,0,0,0,,Có khác gì không?
Dialogue: 0,0:07:50.80,0:07:52.10,Default,,0,0,0,,Cái này thì sao?
Dialogue: 0,0:07:52.64,0:07:54.47,Default,,0,0,0,,{\i1}Toàn là họa tiết mèo!{\i0}
Dialogue: 0,0:07:55.02,0:07:56.18,Default,,0,0,0,,Tớ sẽ chọn áo cho cậu!
Dialogue: 0,0:07:56.27,0:07:58.69,Default,,0,0,0,,Không! Đừng vào!
Dialogue: 0,0:08:00.06,0:08:01.69,Default,,0,0,0,,Đồ lót của tớ còn đang phơi!
Dialogue: 0,0:08:02.65,0:08:05.32,Default,,0,0,0,,Tớ không quan tâm\Nmấy cái quần lót cấp một của cậu.
Dialogue: 0,0:08:05.40,0:08:08.07,Default,,0,0,0,,Đồ thô lỗ! Đáng yêu mà!
Dialogue: 0,0:08:08.15,0:08:11.16,Default,,0,0,0,,Đừng đẩy vào mặt tớ,\Nnhư thế không thoải mái tí nào.
Dialogue: 0,0:08:12.41,0:08:13.53,Default,,0,0,0,,Tớ tự hỏi
Dialogue: 0,0:08:13.62,0:08:16.58,Default,,0,0,0,,sao cậu có nhiều đồ bộ thế.
Dialogue: 0,0:08:20.83,0:08:22.59,Default,,0,0,0,,Vì đó là tất cả những gì cậu có!
Dialogue: 0,0:08:23.13,0:08:25.92,Default,,0,0,0,,Gì chứ? Mặc như vậy ra ngoài vẫn ổn mà!
Dialogue: 0,0:08:26.96,0:08:28.38,Default,,0,0,0,,Tiết kiệm được bao nhiêu rồi?
Dialogue: 0,0:08:28.47,0:08:31.14,Default,,0,0,0,,Tớ hả? Vẫn còn tiền từ đợt nghỉ lễ.
Dialogue: 0,0:08:31.22,0:08:32.55,Default,,0,0,0,,Có kế hoạch gì chưa?
Dialogue: 0,0:08:33.14,0:08:35.81,Default,,0,0,0,,Hiện tại thì chưa.
Dialogue: 0,0:08:36.85,0:08:38.48,Default,,0,0,0,,Tớ định mua game.
Dialogue: 0,0:08:40.14,0:08:41.90,Default,,0,0,0,,Cậu cũng mua quần áo đi.
Dialogue: 0,0:08:43.15,0:08:44.15,Default,,0,0,0,,Hả?
Dialogue: 0,0:08:47.78,0:08:49.49,Default,,0,0,0,,Tớ không quan tâm cậu mặc gì ở nhà,
Dialogue: 0,0:08:49.57,0:08:51.36,Default,,0,0,0,,nhưng ít ra phải có một bộ bình thường.
Dialogue: 0,0:08:51.45,0:08:53.20,Default,,0,0,0,,Họa tiết mèo rất bình thường mà!
Dialogue: 0,0:08:53.28,0:08:54.83,Default,,0,0,0,,Biết là vậy, nhưng…
Dialogue: 0,0:08:55.66,0:08:58.58,Default,,0,0,0,,Cậu không có quần áo để đi mua sắm.
Dialogue: 0,0:08:59.83,0:09:02.42,Default,,0,0,0,,Cho qua nào! Những lúc thế này,
Dialogue: 0,0:09:02.50,0:09:03.83,Default,,0,0,0,,tớ có mặt để giúp!
Dialogue: 0,0:09:03.92,0:09:05.59,Default,,0,0,0,,Cậu còn sống!
Dialogue: 0,0:09:06.17,0:09:09.72,Default,,0,0,0,,Tớ sẽ chọn bộ đồ dễ thương nhất cho Anzu!
Dialogue: 0,0:09:10.26,0:09:12.84,Default,,0,0,0,,Kazuki, xuống dưới nhà ngồi cho vững nhé!
Dialogue: 0,0:09:15.93,0:09:17.60,Default,,0,0,0,,Đũa thần đã thanh tẩy xong.
Dialogue: 0,0:09:17.68,0:09:19.89,Default,,0,0,0,,Tớ có thể làm phép trở lại rồi!
Dialogue: 0,0:09:20.52,0:09:24.06,Default,,0,0,0,,Tôi tưởng vụ kẻ trộm đồ lót là cậu làm mà.
Dialogue: 0,0:09:24.15,0:09:27.48,Default,,0,0,0,,Tớ đã nhờ vả trụ sở chuyện đó.
Dialogue: 0,0:09:27.57,0:09:29.65,Default,,0,0,0,,Sẽ có ngày cậu và trụ sở nát dưới tay tôi.
Dialogue: 0,0:09:29.74,0:09:33.03,Default,,0,0,0,,Dù sao thì, đây là cuộc hẹn của cậu.
Dialogue: 0,0:09:33.11,0:09:34.95,Default,,0,0,0,,Tớ sẽ khiến cậu trông thật đáng yêu!
Dialogue: 0,0:09:35.03,0:09:36.87,Default,,0,0,0,,Đây không phải hẹn hò.
Dialogue: 0,0:09:36.95,0:09:39.37,Default,,0,0,0,,Nếu cậu còn giở trò, tôi sẽ không đi đâu.
Dialogue: 0,0:09:39.45,0:09:43.37,Default,,0,0,0,,Nói thế nữa là tớ\Nném quần áo của cậu đi đấy.
Dialogue: 0,0:09:43.46,0:09:44.54,Default,,0,0,0,,Gì cơ?
Dialogue: 0,0:09:45.96,0:09:47.34,Default,,0,0,0,,Đống hình mèo này.
Dialogue: 0,0:09:47.42,0:09:50.01,Default,,0,0,0,,Tớ sẽ vứt hết đi.
Dialogue: 0,0:09:55.76,0:09:57.01,Default,,0,0,0,,Kazuki!
Dialogue: 0,0:09:57.89,0:09:59.56,Default,,0,0,0,,Cảm ơn vì đã đợi!
Dialogue: 0,0:10:00.27,0:10:02.27,Default,,0,0,0,,- Giờ thì tiến lên, Anzu!\N- Chà!
Dialogue: 0,0:10:04.90,0:10:06.81,Default,,0,0,0,,{\i1}Nó còn trang điểm cho mình nữa.{\i0}
Dialogue: 0,0:10:08.11,0:10:10.03,Default,,0,0,0,,{\i1}Xấu hổ quá đi…{\i0}
Dialogue: 0,0:10:17.70,0:10:20.41,Default,,0,0,0,,Xin lỗi đã để cậu chờ.
Dialogue: 0,0:10:21.87,0:10:22.75,Default,,0,0,0,,Không sao.
Dialogue: 0,0:10:23.25,0:10:25.25,Default,,0,0,0,,{\i1}Thật đáng lo ngại.{\i0}
Dialogue: 0,0:10:25.33,0:10:26.67,Default,,0,0,0,,{\i1}Mình thấy bồn chồn quá!{\i0}
Dialogue: 0,0:10:26.75,0:10:28.09,Default,,0,0,0,,Phấn khích quá!
Dialogue: 0,0:10:28.84,0:10:30.55,Default,,0,0,0,,- Đi thôi.\N- Ừ!
Dialogue: 0,0:10:31.63,0:10:34.26,Default,,0,0,0,,Bộ đồ đó… hợp với cậu đấy.
Dialogue: 0,0:10:40.77,0:10:41.93,Default,,0,0,0,,Cậu bị sao vậy?
Dialogue: 0,0:10:42.02,0:10:44.48,Default,,0,0,0,,Tớ cảm thấy có vấn đề sắp xảy ra.
Dialogue: 0,0:10:44.56,0:10:46.06,Default,,0,0,0,,Khuôn mặt của cậu mới có vấn đề.
Dialogue: 0,0:10:46.94,0:10:48.06,Default,,0,0,0,,{\i1}Nhưng…{\i0}
Dialogue: 0,0:10:48.94,0:10:51.07,Default,,0,0,0,,{\i1}- Mình đang trưng diện.{\i0}\N- Hoan hô!
Dialogue: 0,0:10:51.15,0:10:53.36,Default,,0,0,0,,Tớ sẽ gửi hóa đơn quần áo về trụ sở!
Dialogue: 0,0:10:53.94,0:10:56.07,Default,,0,0,0,,{\i1}Mình đang đi cạnh trai đẹp…{\i0}
Dialogue: 0,0:10:57.70,0:11:01.58,Default,,0,0,0,,{\i1}Đây chắc chắn là một buổi hẹn hò!{\i0}
Dialogue: 0,0:11:13.46,0:11:16.05,Default,,0,0,0,,{\i1}Ai cũng sành điệu.{\i0}
Dialogue: 0,0:11:16.55,0:11:20.76,Default,,0,0,0,,{\i1}Đây là một thế giới hoàn toàn khác\Nvới việc mua đồ hình mèo qua mạng.{\i0}
Dialogue: 0,0:11:20.85,0:11:22.47,Default,,0,0,0,,{\i1}Mình đã đầu thai sao?{\i0}
Dialogue: 0,0:11:22.56,0:11:23.77,Default,,0,0,0,,Vẻ mặt đó là sao?
Dialogue: 0,0:11:23.85,0:11:26.31,Default,,0,0,0,,- Đừng lo.\N- Trông xấu lắm luôn.
Dialogue: 0,0:11:26.94,0:11:28.65,Default,,0,0,0,,{\i1}Tổn thương ghê.{\i0}
Dialogue: 0,0:11:28.73,0:11:32.07,Default,,0,0,0,,Có nhiều người ở đây hơn tớ nghĩ.\NLàm cho xong đi.
Dialogue: 0,0:11:33.94,0:11:36.78,Default,,0,0,0,,Kazuki, cậu thích mũ à?
Dialogue: 0,0:11:36.86,0:11:38.99,Default,,0,0,0,,Lúc mới gặp cậu cũng đội mũ.
Dialogue: 0,0:11:39.57,0:11:42.66,Default,,0,0,0,,Không, tớ chỉ không muốn bị nhìn thấy.
Dialogue: 0,0:11:43.33,0:11:44.45,Default,,0,0,0,,Thì ra là vậy.
Dialogue: 0,0:11:45.20,0:11:47.08,Default,,0,0,0,,Nó cũng chẳng che được mấy.
Dialogue: 0,0:11:48.37,0:11:49.67,Default,,0,0,0,,Đeo thêm khẩu trang thì sao?
Dialogue: 0,0:11:50.17,0:11:51.63,Default,,0,0,0,,{\i1}Thế càng khiến tớ nổi bật hơn.{\i0}
Dialogue: 0,0:11:51.71,0:11:54.21,Default,,0,0,0,,{\i1}Mọi người sẽ đi theo\Nvì họ tưởng tớ là người nổi tiếng.{\i0}
Dialogue: 0,0:11:54.30,0:11:56.76,Default,,0,0,0,,{\i1}Kiểu gì cũng không giấu được\Nnét điển trai ấy.{\i0}
Dialogue: 0,0:11:57.68,0:12:00.97,Default,,0,0,0,,{\i1}Hẳn cậu ấy rất ghét bị con gái theo đuổi.{\i0}
Dialogue: 0,0:12:01.68,0:12:06.14,Default,,0,0,0,,{\i1}Có lý do gì khiến cậu ấy chuyển đến đây\Nđể học cấp ba không?{\i0}
Dialogue: 0,0:12:10.73,0:12:12.36,Default,,0,0,0,,Tiến lên!
Dialogue: 0,0:12:20.41,0:12:21.62,Default,,0,0,0,,Mũ trùm mèo!
Dialogue: 0,0:12:22.32,0:12:25.49,Default,,0,0,0,,Tớ muốn nó! Để tớ mua!
Dialogue: 0,0:12:35.17,0:12:36.21,Default,,0,0,0,,Không tin nổi.
Dialogue: 0,0:12:37.34,0:12:40.38,Default,,0,0,0,,Tớ đã mua đồ không liên quan\Nđến mèo sao? Đúng vậy rồi!
Dialogue: 0,0:12:40.47,0:12:42.26,Default,,0,0,0,,Điên rồ đến vậy sao?
Dialogue: 0,0:12:43.60,0:12:44.97,Default,,0,0,0,,{\i1}Chi phí cứ để trụ sở lo!{\i0}
Dialogue: 0,0:12:45.47,0:12:46.77,Default,,0,0,0,,{\i1}Mình đang trưng diện,{\i0}
Dialogue: 0,0:12:47.27,0:12:50.69,Default,,0,0,0,,{\i1}và Kazuki chọn đồ cho mình,\Ndù mình vẫn phải trả tiền.{\i0}
Dialogue: 0,0:12:51.19,0:12:52.48,Default,,0,0,0,,{\i1}Cứ như thể…{\i0}
Dialogue: 0,0:12:52.56,0:12:55.23,Default,,0,0,0,,{\i1}Mình đang rơi vào bẫy của nó!{\i0}
Dialogue: 0,0:12:55.32,0:12:57.61,Default,,0,0,0,,- Lấy được rồi!\N{\i1}- Mình không mắc lừa đâu!{\i0}
Dialogue: 0,0:12:57.69,0:12:59.45,Default,,0,0,0,,{\i1}Mấy thứ này dùng khi ra ngoài thôi!{\i0}
Dialogue: 0,0:13:00.91,0:13:04.03,Default,,0,0,0,,{\i1}Mình sẽ không nói với Junta\Nvề quần áo mới. Xin lỗi!{\i0}
Dialogue: 0,0:13:04.62,0:13:06.87,Default,,0,0,0,,Làm gì đây? Trên đường về ăn gì đó không?
Dialogue: 0,0:13:07.41,0:13:09.21,Default,,0,0,0,,Được. À…
Dialogue: 0,0:13:09.29,0:13:12.21,Default,,0,0,0,,- Tớ phải đi tè đã.\N- Đừng nói "tè".
Dialogue: 0,0:13:13.21,0:13:15.67,Default,,0,0,0,,Nhà vệ sinh đằng kia. Cậu đợi ở đây nhé.
Dialogue: 0,0:13:15.75,0:13:17.51,Default,,0,0,0,,Được. Tớ sẽ xem xung quanh.
Dialogue: 0,0:13:19.34,0:13:20.51,Default,,0,0,0,,Để tớ cầm túi cho…
Dialogue: 0,0:13:31.98,0:13:33.56,Default,,0,0,0,,- Nhìn cậu ấy kìa!\N- Chà!
Dialogue: 0,0:13:35.65,0:13:38.69,Default,,0,0,0,,- Cậu ấy đi gặp ai à?\N- Đẹp trai quá!
Dialogue: 0,0:13:48.49,0:13:49.50,Default,,0,0,0,,{\i1}Cậu ấy đi lâu quá.{\i0}
Dialogue: 0,0:13:53.54,0:13:54.83,Default,,0,0,0,,Muốn thử tán cậu ấy không?
Dialogue: 0,0:13:54.92,0:13:56.50,Default,,0,0,0,,Nhỡ người ta đợi bạn gái thì sao?
Dialogue: 0,0:13:56.59,0:13:58.05,Default,,0,0,0,,Có khi là đợi bạn thôi.
Dialogue: 0,0:14:02.38,0:14:04.80,Default,,0,0,0,,{\i1}Lẽ ra mình nên đợi ở nơi vắng vẻ hơn.{\i0}
Dialogue: 0,0:14:09.06,0:14:10.06,Default,,0,0,0,,{\i1}Mau quay lại đi.{\i0}
Dialogue: 0,0:14:11.81,0:14:15.02,Default,,0,0,0,,{\i1}Làm ơn đừng nói chuyện với tôi.{\i0}
Dialogue: 0,0:14:20.65,0:14:22.19,Default,,0,0,0,,Tsukasa…
Dialogue: 0,0:14:24.95,0:14:25.95,Default,,0,0,0,,{\i1}Đừng nhìn tôi.{\i0}
Dialogue: 0,0:14:27.53,0:14:29.20,Default,,0,0,0,,Tsukasa…
Dialogue: 0,0:14:32.37,0:14:33.46,Default,,0,0,0,,{\i1}Đừng lại đây!{\i0}
Dialogue: 0,0:14:34.33,0:14:35.42,Default,,0,0,0,,{\i1}Đi đi!{\i0}
Dialogue: 0,0:14:36.58,0:14:37.63,Default,,0,0,0,,{\i1}Kazuki!{\i0}
Dialogue: 0,0:14:45.47,0:14:47.39,Default,,0,0,0,,Xin lỗi đã để cậu chờ.
Dialogue: 0,0:14:47.47,0:14:49.31,Default,,0,0,0,,Tớ vừa tìm thấy một cửa hàng hoàn hảo.
Dialogue: 0,0:14:50.85,0:14:52.27,Default,,0,0,0,,Đi với tớ.
Dialogue: 0,0:15:02.11,0:15:04.32,Default,,0,0,0,,Nhìn này!
Dialogue: 0,0:15:07.36,0:15:10.53,Default,,0,0,0,,Thật may mắn khi tình cờ đi ngang chỗ này!
Dialogue: 0,0:15:11.70,0:15:13.54,Default,,0,0,0,,Tớ rất vui vì ta đã đến đây!
Dialogue: 0,0:15:24.26,0:15:25.30,Default,,0,0,0,,Ừ.
Dialogue: 0,0:15:28.97,0:15:30.22,Default,,0,0,0,,Chà!
Dialogue: 0,0:15:30.30,0:15:32.22,Default,,0,0,0,,Trông giống hệt Momohiki!
Dialogue: 0,0:15:33.85,0:15:37.10,Default,,0,0,0,,Mê quá, nhưng tớ đã tiêu tiền rồi.
Dialogue: 0,0:15:37.19,0:15:38.94,Default,,0,0,0,,Tớ sẽ ráng nhịn đến ngày nhận lương.
Dialogue: 0,0:15:39.02,0:15:41.27,Default,,0,0,0,,- Bao nhiêu đây thì tớ trả được.\N- Hả?
Dialogue: 0,0:15:41.86,0:15:43.61,Default,,0,0,0,,Chút đền đáp vì ngày hôm nay.
Dialogue: 0,0:15:45.19,0:15:46.28,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:15:46.36,0:15:47.20,Default,,0,0,0,,THẦN
Dialogue: 0,0:15:47.28,0:15:49.24,Default,,0,0,0,,- Cảm ơn cậu!\N- Cảm ơn quý khách!
Dialogue: 0,0:15:52.28,0:15:54.91,Default,,0,0,0,,Dễ thương quá!
Dialogue: 0,0:15:55.00,0:15:58.83,Default,,0,0,0,,Tớ không biết cảm ơn sao cho đủ!\NNó sẽ là vật gia truyền của nhà tớ!
Dialogue: 0,0:15:58.92,0:15:59.92,Default,,0,0,0,,Cậu nói quá rồi.
Dialogue: 0,0:16:01.84,0:16:03.92,Default,,0,0,0,,Ta đã ở ngoài đường cả ngày.
Dialogue: 0,0:16:06.80,0:16:07.88,Default,,0,0,0,,Anzu?
Dialogue: 0,0:16:10.68,0:16:12.60,Default,,0,0,0,,Hôm nay cậu ăn diện thế.
Dialogue: 0,0:16:13.56,0:16:14.89,Default,,0,0,0,,Ý tưởng của Riri ấy mà.
Dialogue: 0,0:16:16.27,0:16:18.85,Default,,0,0,0,,Lần đầu tớ thấy cậu\Ndiện đồ không có họa tiết mèo.
Dialogue: 0,0:16:19.90,0:16:21.48,Default,,0,0,0,,Dễ thương quá!
Dialogue: 0,0:16:21.56,0:16:23.86,Default,,0,0,0,,Cậu đúng là luôn mặc đồ hình mèo.
Dialogue: 0,0:16:24.57,0:16:28.40,Default,,0,0,0,,- Hai người đi cùng nhau à?\N- Ừ, bọn tớ mua quần áo mùa hè.
Dialogue: 0,0:16:30.41,0:16:31.74,Default,,0,0,0,,Thật không công bằng!
Dialogue: 0,0:16:31.82,0:16:33.70,Default,,0,0,0,,{\i1}Đừng nhìn tớ như thế.{\i0}
Dialogue: 0,0:16:34.37,0:16:36.08,Default,,0,0,0,,Tập xong chắc cậu mệt lắm.
Dialogue: 0,0:16:36.16,0:16:38.46,Default,,0,0,0,,Bọn tớ có bánh taiyaki.\NVề nhà rồi cùng ăn nhé!
Dialogue: 0,0:16:38.54,0:16:40.46,Default,,0,0,0,,Tuyệt! Cảm ơn!
Dialogue: 0,0:16:40.54,0:16:43.00,Default,,0,0,0,,Tớ sẽ chuẩn bị bữa tối ngay.\NCậu ăn nổi chứ?
Dialogue: 0,0:16:43.09,0:16:44.09,Default,,0,0,0,,Tớ ăn khỏe lắm!
Dialogue: 0,0:16:46.88,0:16:49.05,Default,,0,0,0,,{\i1}Mừng là lại có một ngày bình thường.{\i0}
Dialogue: 0,0:16:49.55,0:16:52.68,Default,,0,0,0,,{\i1}Cứ nghĩ Riri sẽ lại\Ngiở trò quái lạ gì đó với bọn mình.{\i0}
Dialogue: 0,0:16:53.22,0:16:55.85,Default,,0,0,0,,Tối nay ta phải xem tập tiếp theo!
Dialogue: 0,0:16:56.39,0:16:57.31,Default,,0,0,0,,- Ừ.\N- Ừ.
Dialogue: 0,0:17:00.39,0:17:04.48,Default,,0,0,0,,Chuyện gì xảy ra sau khi xác sống\Ntìm thấy nhân vật chính?
Dialogue: 0,0:17:04.57,0:17:06.32,Default,,0,0,0,,Kết cục sẽ không hay đâu!
Dialogue: 0,0:17:21.83,0:17:24.92,Default,,0,0,0,,{\an8}VÌ HÌNH ẢNH KHÓ COI\NNÊN ĐÃ CHUYỂN THÀNH MỘT LÁT BÁNH
Dialogue: 0,0:17:25.00,0:17:27.84,Default,,0,0,0,,Kazuki, giết nó đi!
Dialogue: 0,0:17:27.92,0:17:29.47,Default,,0,0,0,,Thật tình.
Dialogue: 0,0:17:29.55,0:17:32.47,Default,,0,0,0,,{\an8}VÌ HÌNH ẢNH KHÓ COI\NNÊN ĐÃ CHUYỂN THÀNH MỘT LÁT BÁNH
Dialogue: 0,0:17:32.55,0:17:34.97,Default,,0,0,0,,Hayami, nhấc cái ghế sofa lên.
Dialogue: 0,0:17:36.81,0:17:37.64,Default,,0,0,0,,Ơ?
Dialogue: 0,0:17:42.94,0:17:45.02,Default,,0,0,0,,Lũ yếu đuối!
Dialogue: 0,0:17:54.45,0:17:56.78,Default,,0,0,0,,Cậu gan dạ ghê.
Dialogue: 0,0:17:57.95,0:18:04.67,Default,,0,0,0,,Việc cậu đến đây sống là ngoài ý muốn,\Nnhưng cậu đã giúp tớ rất nhiều!
Dialogue: 0,0:18:08.75,0:18:10.84,Default,,0,0,0,,Xin lỗi, tớ thật vô dụng!
Dialogue: 0,0:18:10.92,0:18:13.97,Default,,0,0,0,,Cậu đã bắt được tên trộm đồ lót mà!
Dialogue: 0,0:18:14.64,0:18:16.93,Default,,0,0,0,,Tớ chỉ là một đứa yếu đuối…
Dialogue: 0,0:18:17.01,0:18:19.47,Default,,0,0,0,,Đâu phải ai cũng giữ được bình tĩnh\Ntrước lũ gián.
Dialogue: 0,0:18:20.06,0:18:22.81,Default,,0,0,0,,- Đúng không?\N- Tớ rất xin lỗi…
Dialogue: 0,0:18:25.06,0:18:27.06,Default,,0,0,0,,Tớ mới là người được giúp đỡ mà.
Dialogue: 0,0:18:37.41,0:18:39.99,Default,,0,0,0,,{\i1}Sống chung rất thuận lợi.{\i0}
Dialogue: 0,0:18:40.08,0:18:41.50,Default,,0,0,0,,{\i1}Có vẻ mọi chuyện sẽ ổn thôi.{\i0}
Dialogue: 0,0:18:48.59,0:18:51.51,Default,,0,0,0,,Cậu mất cảnh giác rồi.
Dialogue: 0,0:18:51.59,0:18:54.72,Default,,0,0,0,,Tớ còn vài chiêu chưa tung ra đấy.
Dialogue: 0,0:19:06.15,0:19:07.27,Default,,0,0,0,,Dậy đi.
Dialogue: 0,0:19:11.65,0:19:13.78,Default,,0,0,0,,Kazuki. Sao cậu lại ở đây? Chào buổi sáng!
Dialogue: 0,0:19:13.86,0:19:16.03,Default,,0,0,0,,Tớ đã cố đánh thức cậu từ bên ngoài,
Dialogue: 0,0:19:16.11,0:19:17.45,Default,,0,0,0,,nhưng cậu ngủ say như chết.
Dialogue: 0,0:19:17.53,0:19:20.37,Default,,0,0,0,,Mấy giờ rồi? Ôi không!
Dialogue: 0,0:19:20.45,0:19:22.91,Default,,0,0,0,,Kazuki, cứ đi trước đi!
Dialogue: 0,0:19:23.00,0:19:24.91,Default,,0,0,0,,Tớ cũng định vậy.
Dialogue: 0,0:19:26.79,0:19:28.38,Default,,0,0,0,,Không kịp mất!
Dialogue: 0,0:19:30.25,0:19:34.67,Default,,0,0,0,,Mình chưa từng ngủ muộn thế này!
Dialogue: 0,0:19:38.09,0:19:41.56,Default,,0,0,0,,Ôi không, mình muộn rồi!
Dialogue: 0,0:19:41.64,0:19:43.14,Default,,0,0,0,,{\i1}Khoan, đợi đã.{\i0}
Dialogue: 0,0:19:43.64,0:19:46.06,Default,,0,0,0,,{\i1}Mình vừa nói gì?{\i0}
Dialogue: 0,0:19:46.77,0:19:49.65,Default,,0,0,0,,{\i1}Mình đã nói ra không chút do dự.{\i0}
Dialogue: 0,0:19:50.15,0:19:52.57,Default,,0,0,0,,Mình muộn rồi!
Dialogue: 0,0:19:55.57,0:19:58.86,Default,,0,0,0,,{\i1}Giống hệt như trò hẹn hò ảo vậy.{\i0}
Dialogue: 0,0:20:00.12,0:20:03.54,Default,,0,0,0,,{\i1}Mình sẽ không gặp phải\Nđối tượng yêu đương nào khác chứ?{\i0}
Dialogue: 0,0:20:04.12,0:20:07.04,Default,,0,0,0,,{\i1}Ôi không, mình sắp đi qua góc phố rồi.{\i0}
Dialogue: 0,0:20:07.62,0:20:09.58,Default,,0,0,0,,{\i1}Nhưng chắc sẽ ổn thôi.{\i0}
Dialogue: 0,0:20:09.67,0:20:12.09,Default,,0,0,0,,{\i1}Mình đâu có ăn bánh mì nướng.{\i0}
Dialogue: 0,0:20:17.88,0:20:21.60,Default,,0,0,0,,{\i1}Không phải trai đẹp mà là ô tô. An toàn!{\i0}
Dialogue: 0,0:20:21.68,0:20:23.89,Default,,0,0,0,,{\i1}Không, đây là tai nạn nghiêm trọng!{\i0}
Dialogue: 0,0:20:26.10,0:20:28.94,Default,,0,0,0,,Xin lỗi cô. Cô có bị thương không?
Dialogue: 0,0:20:36.86,0:20:38.45,Default,,0,0,0,,Không sao ạ. Cảm ơn.
Dialogue: 0,0:20:39.82,0:20:41.49,Default,,0,0,0,,Không cần xin lỗi.
Dialogue: 0,0:20:42.49,0:20:47.08,Default,,0,0,0,,Cậu ta là người nhảy ra trước đầu xe.
Dialogue: 0,0:20:51.08,0:20:53.71,Default,,0,0,0,,Cậu đang nhai bánh mì kìa!
Dialogue: 0,0:21:01.76,0:21:03.51,Default,,0,0,0,,Vỗ tay!
Dialogue: 0,0:21:03.60,0:21:05.64,Default,,0,0,0,,Chúc mừng!
Dialogue: 0,0:21:05.72,0:21:11.06,Default,,0,0,0,,Cá là cậu hứng thú với diễn biến sau đó,\Nkhông thể bỏ qua đoạn này đâu nhé!
Dialogue: 0,0:21:11.14,0:21:14.82,Default,,0,0,0,,Ta sống trong thời đại muốn gì xem đó.
Dialogue: 0,0:21:14.90,0:21:18.49,Default,,0,0,0,,Nhưng ta đã mất gì trong quá trình trên?
Dialogue: 0,0:21:18.57,0:21:19.95,Default,,0,0,0,,Đừng nói không muốn thay đổi.
Dialogue: 0,0:21:20.03,0:21:22.61,Default,,0,0,0,,Hãy phiêu lưu và sống một\Ncuộc đời hạnh phúc, lấp lánh!
Dialogue: 0,0:21:22.70,0:21:24.62,Default,,0,0,0,,Vì lương của tớ cả thôi.
Dialogue: 0,0:21:26.95,0:21:27.79,Default,,0,0,0,,{\i1}Ah, yeah!{\i0}
Dialogue: 0,0:21:30.41,0:21:31.25,Default,,0,0,0,,{\an8\i1}Let's go!{\i0}
Dialogue: 0,0:21:33.79,0:21:34.92,Default,,0,0,0,,{\an8\i1}Lo-love!{\i0}
Dialogue: 0,0:21:37.00,0:21:37.84,Default,,0,0,0,,{\an8\i1}Here we go!{\i0}
Dialogue: 0,0:21:37.92,0:21:41.13,Default,,0,0,0,,{\an8\i1}Xin lỗi vì đã ép cậu{\i0}
Dialogue: 0,0:21:41.22,0:21:44.39,Default,,0,0,0,,{\an8\i1}Nhưng tớ hứa cậu sẽ tận hưởng\NMột tương lai tuyệt vời{\i0}
Dialogue: 0,0:21:44.47,0:21:51.10,Default,,0,0,0,,{\an8\i1}Không, không phải ba khao khát lớn của cậu\NGame, sô-cô-la và mèo{\i0}
Dialogue: 0,0:21:51.18,0:21:54.02,Default,,0,0,0,,{\an8}Tôi sẽ không bao giờ đầu hàng\Ntrước đám trai đẹp này!
Dialogue: 0,0:21:54.10,0:21:57.48,Default,,0,0,0,,{\an8}Giờ cậu nói thế thôi,\Nnhưng tớ biết rồi cậu sẽ bỏ cuộc!
Dialogue: 0,0:21:57.57,0:21:59.19,Default,,0,0,0,,{\i1}Cậu cũng thế!{\i0}
Dialogue: 0,0:21:59.28,0:22:00.94,Default,,0,0,0,,{\i1}Tớ biết tim cậu đang đập rất nhanh!{\i0}
Dialogue: 0,0:22:01.03,0:22:03.57,Default,,0,0,0,,{\i1}Yêu, không ai có thể ngăn cản tình yêu!{\i0}
Dialogue: 0,0:22:03.66,0:22:06.16,Default,,0,0,0,,{\an8\i1}Thôi nào, cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:22:06.24,0:22:07.45,Default,,0,0,0,,{\an8\i1}Thừa nhận đi{\i0}
Dialogue: 0,0:22:07.53,0:22:09.54,Default,,0,0,0,,{\i1}Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:22:09.62,0:22:10.83,Default,,0,0,0,,{\i1}Đừng cứng đầu nữa{\i0}
Dialogue: 0,0:22:10.91,0:22:12.75,Default,,0,0,0,,{\i1}Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:22:12.83,0:22:17.00,Default,,0,0,0,,{\i1}Cậu không thể né tránh trai đẹp mãi{\i0}
Dialogue: 0,0:22:17.09,0:22:19.13,Default,,0,0,0,,{\i1}Thôi nào! Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:22:19.21,0:22:20.67,Default,,0,0,0,,{\i1}Cứ để đó cho tớ{\i0}
Dialogue: 0,0:22:20.76,0:22:22.80,Default,,0,0,0,,{\i1}Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:22:22.88,0:22:23.97,Default,,0,0,0,,{\i1}Nào nhận thua đi{\i0}
Dialogue: 0,0:22:24.05,0:22:26.05,Default,,0,0,0,,{\i1}Cậu không muốn yêu sao?{\i0}
Dialogue: 0,0:22:26.14,0:22:30.93,Default,,0,0,0,,{\an8\i1}Cậu không thể né tránh trai đẹp mãi{\i0}
Dialogue: 0,0:22:31.02,0:22:32.27,Default,,0,0,0,,{\an8\i1}Ôm lấy tớ, ôm thật chặt{\i0}
Dialogue: 0,0:22:32.35,0:22:33.98,Default,,0,0,0,,{\an8\i1}Giải phóng phần hoang dại trong cậu{\i0}
Dialogue: 0,0:22:34.06,0:22:35.56,Default,,0,0,0,,{\an8\i1}Dấu hiệu tình yêu chỉ cậu nhận ra{\i0}
