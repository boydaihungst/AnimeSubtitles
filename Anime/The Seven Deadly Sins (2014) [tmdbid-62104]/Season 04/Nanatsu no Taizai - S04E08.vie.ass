Dialogue: 0,0:00:06.01,0:00:10.97,Default,,0,0,0,,LOẠT PHIM HOẠT HÌNH CỦA NETFLIX
Dialogue: 0,0:00:14.06,0:00:16.14,Default,,0,0,0,,{\i1}Sau khi thoát khỏi các Giới Luật,{\i0}
Dialogue: 0,0:00:16.22,0:00:20.44,Default,,0,0,0,,{\i1}Mael bắt tay với Thất Hình Đại Tội\Nđể kết thúc Thánh Chiến.{\i0}
Dialogue: 0,0:00:24.11,0:00:25.94,Default,,0,0,0,,{\i1}Trong khi đó, ở Camelot,{\i0}
Dialogue: 0,0:00:26.03,0:00:28.70,Default,,0,0,0,,{\i1}Cusack và Chandler\Ntrở thành Ác Quỷ Nguyên Thủy{\i0}
Dialogue: 0,0:00:29.20,0:00:31.32,Default,,0,0,0,,{\i1}mặt đối mặt với Merlin và nhóm của cô ấy.{\i0}
Dialogue: 0,0:00:33.78,0:00:35.49,Default,,0,0,0,,{\i1}Trong Luyện Ngục,{\i0}
Dialogue: 0,0:00:35.58,0:00:38.33,Default,,0,0,0,,{\i1}khi Meliodas và Ban\Nđịnh vượt ngục về hiện tại,{\i0}
Dialogue: 0,0:00:38.41,0:00:41.29,Default,,0,0,0,,{\i1}trận chiến của họ với Quỷ Vương bắt đầu.{\i0}
Dialogue: 0,0:00:46.88,0:00:47.71,Default,,0,0,0,,Wild!
Dialogue: 0,0:00:58.48,0:00:59.81,Default,,0,0,0,,Đừng chỉ đứng nhìn!
Dialogue: 0,0:01:05.23,0:01:07.11,Default,,0,0,0,,Ta đã nói rồi,
Dialogue: 0,0:01:07.19,0:01:11.11,Default,,0,0,0,,ta sẽ không bao giờ để các ngươi quay về.
Dialogue: 0,0:01:11.20,0:01:12.70,Default,,0,0,0,,Xin lỗi, Ban!
Dialogue: 0,0:01:15.49,0:01:17.41,Default,,0,0,0,,Tước Đoạt Thể Chất!
Dialogue: 0,0:01:17.49,0:01:18.75,Default,,0,0,0,,Bắt được ngươi rồi!
Dialogue: 0,0:01:22.96,0:01:23.92,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:01:24.50,0:01:26.88,Default,,0,0,0,,{\i1}Sức mạnh của mình\Nthực sự bị hút hết rồi sao?{\i0}
Dialogue: 0,0:01:26.96,0:01:28.17,Default,,0,0,0,,Sao vậy, Ban?
Dialogue: 0,0:01:32.18,0:01:33.26,Default,,0,0,0,,Cậu ổn chứ, Ban?
Dialogue: 0,0:01:33.34,0:01:34.47,Default,,0,0,0,,Ừ!
Dialogue: 0,0:01:46.31,0:01:49.78,Default,,0,0,0,,Ngươi có biết\Nsức mạnh của Quỷ Vương không?
Dialogue: 0,0:01:49.86,0:01:52.24,Default,,0,0,0,,Chỉ cần ta bảo vệ được nó,
Dialogue: 0,0:01:52.32,0:01:57.28,Default,,0,0,0,,ngươi sẽ không bao giờ\Nbước qua cánh cửa này được.
Dialogue: 0,0:01:57.37,0:02:00.12,Default,,0,0,0,,Ông không được quyết định việc đó!
Dialogue: 0,0:02:00.20,0:02:01.96,Default,,0,0,0,,Ta có chứ.
Dialogue: 0,0:02:03.54,0:02:04.87,Default,,0,0,0,,{\an8}Phản Đòn Toàn Phần!
Dialogue: 0,0:02:06.29,0:02:09.13,Default,,0,0,0,,Cậu ấy phản lại đòn tấn công đó!
Dialogue: 0,0:02:11.09,0:02:13.93,Default,,0,0,0,,Anh ấy phản lại đòn đó,\Nnhưng không có tác dụng gì với hắn.
Dialogue: 0,0:02:14.01,0:02:16.89,Default,,0,0,0,,Thật ra, có vẻ hắn đã hấp thụ pháp lực đó.
Dialogue: 0,0:02:16.97,0:02:18.10,Default,,0,0,0,,Đội trưởng!
Dialogue: 0,0:02:18.18,0:02:20.18,Default,,0,0,0,,Pháp lực của hắn là gì?
Dialogue: 0,0:02:20.27,0:02:23.31,Default,,0,0,0,,Có vẻ đòn tấn công của chúng ta\Nchẳng có tác dụng gì với hắn!
Dialogue: 0,0:02:23.81,0:02:27.61,Default,,0,0,0,,Pháp lực được đặt tên theo Quỷ Vương.
Dialogue: 0,0:02:27.69,0:02:28.61,Default,,0,0,0,,Danh hiệu đó.
Dialogue: 0,0:02:29.94,0:02:31.53,Default,,0,0,0,,{\an8}Kẻ Thống Trị!
Dialogue: 0,0:02:35.24,0:02:37.45,Default,,0,0,0,,{\i1}Đây là câu chuyện từ xa xưa,{\i0}
Dialogue: 0,0:02:37.53,0:02:41.95,Default,,0,0,0,,{\i1}khi cõi người và cõi súc sinh\Nchưa bị tách ra.{\i0}
Dialogue: 0,0:02:45.33,0:02:46.96,Default,,0,0,0,,{\i1}Thánh Chiến lại diễn ra lần nữa!{\i0}
Dialogue: 0,0:02:47.83,0:02:50.50,Default,,0,0,0,,{\i1}Cuộc chiến quyết định\Nsố mệnh của Britannia sẽ ra sao{\i0}
Dialogue: 0,0:02:50.59,0:02:52.67,Default,,0,0,0,,{\i1}là điều mà thần thánh\Ncũng không thể dự đoán.{\i0}
Dialogue: 0,0:02:55.59,0:02:58.18,Default,,0,0,0,,{\i1}Nhưng kể cả vậy,\Nhọ vẫn tiếp tục chiến đấu.{\i0}
Dialogue: 0,0:02:58.26,0:03:00.26,Default,,0,0,0,,{\i1}Họ chiến đấu để diệt ách cai trị tà ác{\i0}
Dialogue: 0,0:03:00.85,0:03:02.89,Default,,0,0,0,,{\i1}và bảo vệ tương lai\Ncủa người họ yêu thương.{\i0}
Dialogue: 0,0:03:03.85,0:03:07.02,Default,,0,0,0,,{\i1}Do đó, họ được biết đến\Nlà những người hùng được chọn,{\i0}
Dialogue: 0,0:03:08.98,0:03:11.36,Default,,0,0,0,,{\i1}Thất Hình Đại Tội!{\i0}
Dialogue: 0,0:04:43.03,0:04:45.95,Default,,0,0,0,,TẬP 8\NCÁNH CỬA DẪN ĐẾN HY VỌNG
Dialogue: 0,0:04:46.04,0:04:48.96,Default,,0,0,0,,{\an8}Lôi Quang Trư!
Dialogue: 0,0:04:49.04,0:04:51.00,Default,,0,0,0,,{\an8}Hồi Chuyển Trư!
Dialogue: 0,0:04:55.55,0:04:57.34,Default,,0,0,0,,Thật cứng đầu.
Dialogue: 0,0:04:57.92,0:04:58.76,Default,,0,0,0,,Wild!
Dialogue: 0,0:05:09.81,0:05:11.60,Default,,0,0,0,,Đau quá.
Dialogue: 0,0:05:11.69,0:05:13.19,Default,,0,0,0,,Quỷ Vương đâu rồi?
Dialogue: 0,0:05:13.27,0:05:15.65,Default,,0,0,0,,Cách đây xa lắm.
Dialogue: 0,0:05:15.73,0:05:20.74,Default,,0,0,0,,Hay nói chính xác hơn,\Nchúng ta bị đánh văng rất xa khỏi hắn.
Dialogue: 0,0:05:21.78,0:05:23.07,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:05:23.16,0:05:27.29,Default,,0,0,0,,Có lẽ tôi không nên quay lại\Nthế giới bên kia nhỉ?
Dialogue: 0,0:05:27.83,0:05:29.95,Default,,0,0,0,,Cậu đang nói gì vậy?
Dialogue: 0,0:05:30.04,0:05:32.08,Default,,0,0,0,,Thế không giống cậu chút nào!
Dialogue: 0,0:05:32.17,0:05:35.79,Default,,0,0,0,,Tôi sẽ không bao giờ bỏ cuộc\Ncho đến khi gặp lại em trai mình!
Dialogue: 0,0:05:35.88,0:05:37.50,Default,,0,0,0,,Đừng hiểu lầm.
Dialogue: 0,0:05:37.59,0:05:39.67,Default,,0,0,0,,Tôi muốn cậu trở về.
Dialogue: 0,0:05:40.30,0:05:42.01,Default,,0,0,0,,Nhưng chuyện của tôi thì khác.
Dialogue: 0,0:05:42.76,0:05:44.01,Default,,0,0,0,,Tôi bị nguyền rủa
Dialogue: 0,0:05:44.80,0:05:48.22,Default,,0,0,0,,phải thấy Elizabeth chết trước mắt mình\Nhết lần này đến lần khác.
Dialogue: 0,0:05:49.02,0:05:53.56,Default,,0,0,0,,- Nếu tôi không trở về, có thể cô ấy sẽ…\N- Đồ ngốc.
Dialogue: 0,0:05:53.64,0:05:56.48,Default,,0,0,0,,Lời nguyền đã có hiệu lực rồi.
Dialogue: 0,0:05:56.56,0:06:01.11,Default,,0,0,0,,Anh nghĩ Công chúa sẽ chấp nhận\Nquyết định của anh à?
Dialogue: 0,0:06:04.03,0:06:06.70,Default,,0,0,0,,Nếu anh yếu đuối, mọi thứ coi như xong.
Dialogue: 0,0:06:09.37,0:06:13.25,Default,,0,0,0,,Chúng ta sẽ rời khỏi nơi này\Nvà cứu người yêu của chúng ta!
Dialogue: 0,0:06:13.33,0:06:14.50,Default,,0,0,0,,Chắc chắn là như thế!
Dialogue: 0,0:06:16.46,0:06:19.34,Default,,0,0,0,,Anh sẽ gỡ bỏ lời nguyền của Công chúa
Dialogue: 0,0:06:20.59,0:06:23.17,Default,,0,0,0,,và tôi sẽ hồi sinh Elaine.
Dialogue: 0,0:06:23.26,0:06:25.55,Default,,0,0,0,,Đơn giản vậy thôi!
Dialogue: 0,0:06:28.14,0:06:30.93,Default,,0,0,0,,Không đơn giản vậy đâu.
Dialogue: 0,0:06:32.81,0:06:35.94,Default,,0,0,0,,Nhưng có lẽ cậu nói có lý.
Dialogue: 0,0:06:38.82,0:06:41.28,Default,,0,0,0,,{\i1}Vì Elizabeth và tôi{\i0}
Dialogue: 0,0:06:41.36,0:06:45.40,Default,,0,0,0,,{\i1}mà toàn bộ Thất Hình Đại Tội và Hawk\Nđều đang liều mạng chiến đấu.{\i0}
Dialogue: 0,0:06:48.32,0:06:51.95,Default,,0,0,0,,Ta phát mệt vì các ngươi rồi.
Dialogue: 0,0:06:52.04,0:06:54.62,Default,,0,0,0,,Phải học được bài học rồi chứ!
Dialogue: 0,0:06:54.71,0:06:58.54,Default,,0,0,0,,Thử mọi cách để lấy cắp sức mạnh của ta
Dialogue: 0,0:06:58.63,0:07:01.50,Default,,0,0,0,,sẽ chỉ làm ta mạnh hơn thôi.
Dialogue: 0,0:07:01.59,0:07:05.42,Default,,0,0,0,,Ngươi có thể cố xuyên qua người ta,
Dialogue: 0,0:07:05.51,0:07:09.85,Default,,0,0,0,,nhưng ngươi sẽ không thể chịu được\Ndù là một vết xước nhẹ nhất.
Dialogue: 0,0:07:20.27,0:07:22.40,Default,,0,0,0,,Phản Đòn Báo Thù!
Dialogue: 0,0:07:25.70,0:07:30.20,Default,,0,0,0,,Rốt cuộc, chiêu thức của ngươi cũng chỉ là\Nthứ kém cỏi sao chép của Chandler.
Dialogue: 0,0:07:30.28,0:07:35.46,Default,,0,0,0,,Ngươi không thể đấu với ta\Nnếu không dùng sức mạnh thật sự của mình.
Dialogue: 0,0:07:36.87,0:07:39.00,Default,,0,0,0,,Nhưng điều đó là không thể.
Dialogue: 0,0:07:39.08,0:07:42.80,Default,,0,0,0,,Sau cùng,\Nngươi cũng khiếp sợ sức mạnh này.
Dialogue: 0,0:07:51.35,0:07:53.60,Default,,0,0,0,,{\i1}Thua bao nhiêu trận rồi nhỉ?{\i0}
Dialogue: 0,0:07:53.68,0:07:55.60,Default,,0,0,0,,{\i1}Tôi giận quá không đếm nổi.{\i0}
Dialogue: 0,0:07:55.68,0:07:56.89,Default,,0,0,0,,{\i1}Ừ, hiểu rồi.{\i0}
Dialogue: 0,0:07:56.98,0:08:01.61,Default,,0,0,0,,Gần 6.093 trận thua và không trận thắng.
Dialogue: 0,0:08:01.69,0:08:03.52,Default,,0,0,0,,Thì ra cậu có đếm.
Dialogue: 0,0:08:04.23,0:08:07.70,Default,,0,0,0,,Đã 60 năm kể từ khi chúng ta\Nbắt đầu chiến đấu với Quỷ Vương.
Dialogue: 0,0:08:08.49,0:08:12.95,Default,,0,0,0,,Nhưng đến chân của ông ấy\Nchúng ta vẫn chưa chạm vào được.
Dialogue: 0,0:08:13.03,0:08:17.50,Default,,0,0,0,,Sáu mươi năm ở đây chỉ là một giờ trên đó.
Dialogue: 0,0:08:17.58,0:08:19.00,Default,,0,0,0,,Đừng lo.
Dialogue: 0,0:08:19.62,0:08:21.75,Default,,0,0,0,,Wild, vết sẹo đó là sao vậy?
Dialogue: 0,0:08:21.83,0:08:23.34,Default,,0,0,0,,Cái này à?
Dialogue: 0,0:08:23.42,0:08:24.92,Default,,0,0,0,,Chẳng là gì cả!
Dialogue: 0,0:08:25.00,0:08:29.22,Default,,0,0,0,,Cậu có được nó vì bảo vệ Đội trưởng hả?
Dialogue: 0,0:08:32.93,0:08:35.52,Default,,0,0,0,,Tôi hiểu rồi. Có lẽ tôi nên thử cái đó.
Dialogue: 0,0:08:41.06,0:08:42.73,Default,,0,0,0,,Vết thương của tôi đã lành!
Dialogue: 0,0:08:43.52,0:08:44.61,Default,,0,0,0,,Thật sao?
Dialogue: 0,0:08:47.69,0:08:49.07,Default,,0,0,0,,{\i1}Này, Ban.{\i0}
Dialogue: 0,0:08:49.15,0:08:51.74,Default,,0,0,0,,{\i1}Cậu học chiêu đó hồi nào vậy?{\i0}
Dialogue: 0,0:08:51.82,0:08:53.49,Default,,0,0,0,,{\i1}Trong 60 năm qua,{\i0}
Dialogue: 0,0:08:53.57,0:08:57.20,Default,,0,0,0,,{\i1}tôi đã nhiều lần cố cướp đi\Nsức mạnh và sinh lực của Quỷ Vương.{\i0}
Dialogue: 0,0:08:57.29,0:08:59.58,Default,,0,0,0,,{\i1}Nhưng hắn vừa cướp của tôi, đúng không?{\i0}
Dialogue: 0,0:08:59.66,0:09:02.54,Default,,0,0,0,,{\i1}Nhờ đó, tôi đã học được\Ncách để bị đánh cắp sức mạnh,{\i0}
Dialogue: 0,0:09:02.63,0:09:06.59,Default,,0,0,0,,{\i1}hay đúng hơn là tặng nó cho người khác.{\i0}
Dialogue: 0,0:09:06.67,0:09:08.80,Default,,0,0,0,,Tôi đã cố thử nghiệm.
Dialogue: 0,0:09:08.88,0:09:12.43,Default,,0,0,0,,Cậu sẽ ổn khi đưa sức mạnh của mình\Ncho người khác chứ?
Dialogue: 0,0:09:12.51,0:09:14.18,Default,,0,0,0,,Tất nhiên rồi!
Dialogue: 0,0:09:14.26,0:09:16.22,Default,,0,0,0,,Tôi bất tử mà.
Dialogue: 0,0:09:17.06,0:09:20.23,Default,,0,0,0,,{\i1}Với sức mạnh này, Elaine…{\i0}
Dialogue: 0,0:09:21.23,0:09:23.81,Default,,0,0,0,,Nhưng nỗi kinh hoàng lớn nhất của ta\Nlà "Kẻ Thống Trị".
Dialogue: 0,0:09:23.90,0:09:26.98,Default,,0,0,0,,Làm thế nào để qua mặt được hắn đây?
Dialogue: 0,0:09:28.15,0:09:29.99,Default,,0,0,0,,Ai có cách gì không?
Dialogue: 0,0:09:32.57,0:09:33.78,Default,,0,0,0,,Khó thật đấy.
Dialogue: 0,0:09:33.86,0:09:38.20,Default,,0,0,0,,Cướp đoạt chỉ làm hắn mạnh lên\Nthay vì làm hắn yếu đi.
Dialogue: 0,0:09:38.29,0:09:41.25,Default,,0,0,0,,Hắn cũng phản lại bất kỳ đòn tấn công nào.
Dialogue: 0,0:09:41.33,0:09:44.33,Default,,0,0,0,,Ngay cả Phản Đòn Toàn Phần\Ncũng bị hấp thụ.
Dialogue: 0,0:09:44.42,0:09:45.42,Default,,0,0,0,,Đúng.
Dialogue: 0,0:09:45.50,0:09:48.84,Default,,0,0,0,,Đòn tấn công thông thường\Nkhông có tác dụng với ông.
Dialogue: 0,0:09:50.46,0:09:53.80,Default,,0,0,0,,Ông ta thực sự kiểm soát được tất cả.
Dialogue: 0,0:09:53.88,0:09:55.30,Default,,0,0,0,,Có lẽ nào…
Dialogue: 0,0:09:55.39,0:09:56.47,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:09:56.55,0:09:58.35,Default,,0,0,0,,Hai cậu. Lắng nghe đi.
Dialogue: 0,0:09:58.43,0:09:59.43,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:10:04.60,0:10:07.73,Default,,0,0,0,,Giờ ta chán ngấy các ngươi rồi.
Dialogue: 0,0:10:08.23,0:10:12.65,Default,,0,0,0,,Sao lại đến để bị ta cướp đi sức mạnh nữa?
Dialogue: 0,0:10:13.78,0:10:16.16,Default,,0,0,0,,Nếu ngươi chỉ muốn cướp đi nó,
Dialogue: 0,0:10:16.24,0:10:18.78,Default,,0,0,0,,thì ta sẽ đưa nó cho ngươi!
Dialogue: 0,0:10:18.87,0:10:19.83,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:10:23.29,0:10:24.96,Default,,0,0,0,,Biết ngay mà.
Dialogue: 0,0:10:25.04,0:10:26.38,Default,,0,0,0,,Quỷ Vương,
Dialogue: 0,0:10:26.46,0:10:30.21,Default,,0,0,0,,bản chất thật sự của quyền lực ngu ngốc\Ncủa ông, Kẻ Thống Trị…
Dialogue: 0,0:10:31.05,0:10:32.21,Default,,0,0,0,,Nghịch chuyển!
Dialogue: 0,0:10:32.30,0:10:35.09,Default,,0,0,0,,Ông chuyển mọi đòn tấn công\Nhoặc làm yếu sức mạnh nhắm đến ông
Dialogue: 0,0:10:35.18,0:10:37.22,Default,,0,0,0,,thành chữa lành và tăng cường!
Dialogue: 0,0:10:37.80,0:10:40.35,Default,,0,0,0,,Hay lắm!
Dialogue: 0,0:10:40.85,0:10:42.64,Default,,0,0,0,,Nhưng mà, Meliodas à.
Dialogue: 0,0:10:42.73,0:10:46.31,Default,,0,0,0,,Không, cảm xúc của con trai ta,
Dialogue: 0,0:10:46.40,0:10:52.40,Default,,0,0,0,,ta sẽ không bao giờ để ngươi\Nquay lại thế giới hiện tại.
Dialogue: 0,0:10:53.07,0:10:54.24,Default,,0,0,0,,Ngay bây giờ!
Dialogue: 0,0:10:55.78,0:10:57.07,Default,,0,0,0,,Ta không cho phép điều đó!
Dialogue: 0,0:10:57.74,0:11:00.83,Default,,0,0,0,,- Ta nghĩ ngươi sẽ cho đấy!\N- Cái gì?
Dialogue: 0,0:11:02.91,0:11:05.79,Default,,0,0,0,,- Ban!\N- Mau tìm cánh cửa đó đi!
Dialogue: 0,0:11:06.29,0:11:09.59,Default,,0,0,0,,Thưởng thức cuộc sống vô tận của ta đi…
Dialogue: 0,0:11:11.42,0:11:14.34,Default,,0,0,0,,Nó đây rồi, ngài Meliodas!
Dialogue: 0,0:11:14.42,0:11:16.18,Default,,0,0,0,,Cánh cửa tới thế giới hiện tại!
Dialogue: 0,0:11:18.89,0:11:21.97,Default,,0,0,0,,Ngươi đã lấy lại được sức mạnh rồi ư?
Dialogue: 0,0:11:23.77,0:11:25.43,Default,,0,0,0,,Bằng cách nào chứ?
Dialogue: 0,0:11:25.52,0:11:29.36,Default,,0,0,0,,Ta chỉ cắt đứt sức mạnh của mình!
Dialogue: 0,0:11:30.02,0:11:34.94,Default,,0,0,0,,Ngươi đã chữa lành vết thương\Nmà ngươi gây ra cho ta.
Dialogue: 0,0:11:35.61,0:11:36.95,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:11:37.03,0:11:39.07,Default,,0,0,0,,Đừng coi thường ta!
Dialogue: 0,0:11:42.83,0:11:44.08,Default,,0,0,0,,Đội trưởng!
Dialogue: 0,0:11:44.16,0:11:45.96,Default,,0,0,0,,Tôi sẽ ngăn ông ấy lại!
Dialogue: 0,0:11:47.16,0:11:48.33,Default,,0,0,0,,Đừng làm loạn nữa!
Dialogue: 0,0:11:48.42,0:11:51.13,Default,,0,0,0,,Anh mà không quay về thì sẽ thật vô nghĩa!
Dialogue: 0,0:11:51.67,0:11:54.84,Default,,0,0,0,,Ông ta sẽ không cho cả ba chúng ta\Ncó đường thoát đâu.
Dialogue: 0,0:11:56.01,0:11:57.84,Default,,0,0,0,,Anh nên về đi.
Dialogue: 0,0:11:58.63,0:11:59.84,Default,,0,0,0,,Tôi sẽ về.
Dialogue: 0,0:12:03.18,0:12:04.93,Default,,0,0,0,,Không thể tha thứ!
Dialogue: 0,0:12:05.02,0:12:08.85,Default,,0,0,0,,Đồ vô dụng bất tuân\Nvà thách thức cha mình!
Dialogue: 0,0:12:10.27,0:12:14.53,Default,,0,0,0,,Tôi chưa bao giờ chấp nhận ông là cha tôi.
Dialogue: 0,0:12:16.24,0:12:17.57,Default,,0,0,0,,Tôi không hiểu
Dialogue: 0,0:12:17.65,0:12:21.03,Default,,0,0,0,,sao ông cứ lưu luyến\Nmột kẻ không ra gì như tôi chứ?
Dialogue: 0,0:12:22.12,0:12:26.16,Default,,0,0,0,,Vì ngươi là Kẻ Hủy Diệt.
Dialogue: 0,0:12:28.75,0:12:30.46,Default,,0,0,0,,Ông mới là Kẻ Huỷ Diệt!
Dialogue: 0,0:12:30.54,0:12:33.50,Default,,0,0,0,,Tôi không có hứng thú\Nvới ngôi vị Quỷ Vương!
Dialogue: 0,0:12:34.04,0:12:37.63,Default,,0,0,0,,Tôi chỉ muốn chấm dứt\Ncuộc xung đột vô nghĩa này!
Dialogue: 0,0:12:40.13,0:12:43.05,Default,,0,0,0,,Nguy hiểm như dự đoán.
Dialogue: 0,0:12:45.51,0:12:48.02,Default,,0,0,0,,Ngài Ban, cậu định làm gì?\NLẹ lên, đi qua cánh cửa đó!
Dialogue: 0,0:12:48.10,0:12:50.77,Default,,0,0,0,,Tôi không thể bỏ Đội trưởng lại được!
Dialogue: 0,0:12:52.19,0:12:57.23,Default,,0,0,0,,Meliodas là đối tượng phù hợp\Nđể kế nghiệp ta.
Dialogue: 0,0:12:58.40,0:13:02.53,Default,,0,0,0,,Ngươi là thứ duy nhất chắn đường nó,\Ncảm xúc của nó à.
Dialogue: 0,0:13:04.78,0:13:05.91,Default,,0,0,0,,Đội trưởng.
Dialogue: 0,0:13:07.62,0:13:11.96,Default,,0,0,0,,Chịu đựng tám triệu năm qua quả là đáng.
Dialogue: 0,0:13:12.04,0:13:13.46,Default,,0,0,0,,Wild à?
Dialogue: 0,0:13:13.54,0:13:15.34,Default,,0,0,0,,Tôi đã biết Mild còn sống.
Dialogue: 0,0:13:15.42,0:13:17.51,Default,,0,0,0,,Tôi đã biết Mild đã trưởng thành.
Dialogue: 0,0:13:17.59,0:13:19.55,Default,,0,0,0,,Nhờ cả vào cậu đấy!
Dialogue: 0,0:13:29.60,0:13:32.02,Default,,0,0,0,,Quái vật kỳ lạ? Ngươi đấy à?
Dialogue: 0,0:13:32.85,0:13:34.36,Default,,0,0,0,,Sao bộ dạng ngươi lại thành thế?
Dialogue: 0,0:13:34.44,0:13:37.32,Default,,0,0,0,,Sức mạnh đó là gì?
Dialogue: 0,0:13:37.40,0:13:40.07,Default,,0,0,0,,Đại Giải Phóng Wild!
Dialogue: 0,0:13:40.15,0:13:45.32,Default,,0,0,0,,Tuyệt chiêu tối thượng này tấn công kẻ thù\Nbằng cách nổ tung sự sống bên trong mình!
Dialogue: 0,0:13:46.20,0:13:47.45,Default,,0,0,0,,Đồ ngốc!
Dialogue: 0,0:13:47.54,0:13:48.54,Default,,0,0,0,,Cậu sẽ chết mất!
Dialogue: 0,0:13:53.00,0:13:53.96,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:13:55.13,0:13:56.92,Default,,0,0,0,,Đứng lại đó!
Dialogue: 0,0:13:59.51,0:14:01.92,Default,,0,0,0,,{\i1}Đây chính là cái kết của đời tôi.{\i0}
Dialogue: 0,0:14:02.51,0:14:03.68,Default,,0,0,0,,- Wild!\N- Wild!
Dialogue: 0,0:14:08.39,0:14:12.10,Default,,0,0,0,,{\i1}Tôi hối tiếc vì không gặp được em trai.{\i0}
Dialogue: 0,0:14:12.77,0:14:16.61,Default,,0,0,0,,{\i1}Nhưng Mild cần hai người bạn của mình{\i0}
Dialogue: 0,0:14:17.44,0:14:21.86,Default,,0,0,0,,{\i1}hơn là một người anh\Nmà nó chưa từng quen biết.{\i0}
Dialogue: 0,0:14:22.53,0:14:26.57,Default,,0,0,0,,{\i1}Ngài Meliodas. Ngài Ban. Bảo trọng!{\i0}
Dialogue: 0,0:14:29.74,0:14:32.29,Default,,0,0,0,,Tôi không cử động được!
Dialogue: 0,0:14:32.37,0:14:35.54,Default,,0,0,0,,Đội trưởng! Ta sẽ bị tách ra mất!
Dialogue: 0,0:14:35.62,0:14:36.96,Default,,0,0,0,,Tôi hiểu rồi!
Dialogue: 0,0:14:37.04,0:14:39.55,Default,,0,0,0,,Ta đang bị kéo ra hai hướng khác nhau.
Dialogue: 0,0:14:40.30,0:14:43.22,Default,,0,0,0,,{\i1}Cậu sẽ được trả lại cho Hawk\Nvì cậu ấy đưa cậu đến Luyện Ngục.{\i0}
Dialogue: 0,0:14:44.26,0:14:47.97,Default,,0,0,0,,{\i1}Tôi sẽ về với cơ thể mình, thứ đã hấp thụ\Nmột Giới Luật và nằm trong kén!{\i0}
Dialogue: 0,0:14:50.22,0:14:51.52,Default,,0,0,0,,Này, Ban.
Dialogue: 0,0:14:51.60,0:14:55.31,Default,,0,0,0,,Sẽ tốt hơn nếu Wild và Hawk được đoàn tụ,\Nđúng không?
Dialogue: 0,0:14:55.39,0:14:56.52,Default,,0,0,0,,Phải.
Dialogue: 0,0:14:56.60,0:14:59.98,Default,,0,0,0,,Khi ta quay về,\Ntôi sẽ phải hát bài đó cho Sư phụ nghe.
Dialogue: 0,0:15:00.07,0:15:03.69,Default,,0,0,0,,{\i1}Mi… Mild{\i0}
Dialogue: 0,0:15:03.78,0:15:06.61,Default,,0,0,0,,{\i1}Ngủ ngon em nhé{\i0}
Dialogue: 0,0:15:07.28,0:15:11.37,Default,,0,0,0,,{\i1}- Em trai đáng yêu{\i0}\N- Ý này hay đấy!
Dialogue: 0,0:15:11.45,0:15:13.75,Default,,0,0,0,,Không biết Hawk còn nhớ không nữa.
Dialogue: 0,0:15:13.83,0:15:16.58,Default,,0,0,0,,Tôi nghĩ cậu ấy sẽ há hốc mồm\Nnghe cậu hát đấy.
Dialogue: 0,0:15:17.29,0:15:20.59,Default,,0,0,0,,Dù vậy, tôi nghĩ Wild sẽ thích lắm.
Dialogue: 0,0:15:20.67,0:15:21.50,Default,,0,0,0,,Đúng đấy.
Dialogue: 0,0:15:24.30,0:15:25.22,Default,,0,0,0,,{\an8}Đội trưởng!
Dialogue: 0,0:15:27.59,0:15:29.14,Default,,0,0,0,,Ngươi là của ta!
Dialogue: 0,0:15:29.22,0:15:33.77,Default,,0,0,0,,Ta đã nói rồi, ta sẽ không để ngươi\Nquay lại thế giới hiện tại.
Dialogue: 0,0:15:34.31,0:15:36.23,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:15:37.31,0:15:38.23,Default,,0,0,0,,Đội trưởng!
Dialogue: 0,0:15:38.31,0:15:40.27,Default,,0,0,0,,Tôi sẽ quay lại cứu anh!
Dialogue: 0,0:15:40.36,0:15:43.19,Default,,0,0,0,,Đừng bỏ cuộc cho đến khi tôi quay lại!
Dialogue: 0,0:15:43.28,0:15:45.24,Default,,0,0,0,,Giờ đừng lo cho tôi!
Dialogue: 0,0:15:45.82,0:15:47.82,Default,,0,0,0,,Tôi sẽ tự trở về!
Dialogue: 0,0:15:48.32,0:15:51.91,Default,,0,0,0,,Quay về cứu mọi người trước đi!
Dialogue: 0,0:15:52.70,0:15:54.24,Default,,0,0,0,,Đội trưởng.
Dialogue: 0,0:15:54.33,0:15:57.62,Default,,0,0,0,,{\i1}Được rồi. Tôi tin anh, cộng sự ạ.{\i0}
Dialogue: 0,0:16:00.71,0:16:03.30,Default,,0,0,0,,Một cú lừa vô nghĩa.
Dialogue: 0,0:16:03.38,0:16:06.76,Default,,0,0,0,,Sao ngươi thoát được khỏi tay ta chứ?
Dialogue: 0,0:16:06.84,0:16:07.93,Default,,0,0,0,,Hả?
Dialogue: 0,0:16:10.55,0:16:11.93,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:16:13.85,0:16:17.48,Default,,0,0,0,,Sức mạnh đó hủy diệt cơ thể ta?
Dialogue: 0,0:16:18.64,0:16:19.94,Default,,0,0,0,,Meliodas!
Dialogue: 0,0:16:21.06,0:16:22.69,Default,,0,0,0,,Ngươi…
Dialogue: 0,0:16:23.32,0:16:24.78,Default,,0,0,0,,Ông đã nói mà.
Dialogue: 0,0:16:25.36,0:16:27.28,Default,,0,0,0,,Rằng tôi đã chìm trong sợ hãi.
Dialogue: 0,0:16:27.36,0:16:28.99,Default,,0,0,0,,Ông nói đúng.
Dialogue: 0,0:16:29.49,0:16:31.70,Default,,0,0,0,,Giờ tôi đã đánh thức sức mạnh này,
Dialogue: 0,0:16:31.78,0:16:36.00,Default,,0,0,0,,thậm chí nếu quay lại đó,\Ntôi sẽ không thể ở lại được,
Dialogue: 0,0:16:36.50,0:16:38.04,Default,,0,0,0,,nhưng tôi đã quyết định rồi.
Dialogue: 0,0:16:38.12,0:16:39.37,Default,,0,0,0,,Dừng tay lại!
Dialogue: 0,0:16:40.25,0:16:42.29,Default,,0,0,0,,Ngươi không được quay về!
Dialogue: 0,0:16:42.79,0:16:45.25,Default,,0,0,0,,Ngươi sẽ phá hỏng mọi thứ!
Dialogue: 0,0:16:48.13,0:16:50.88,Default,,0,0,0,,Đây là lần đầu tiên tôi thấy ông sợ!
Dialogue: 0,0:16:52.34,0:16:54.76,Default,,0,0,0,,Đừng mà!
Dialogue: 0,0:17:04.90,0:17:06.90,Default,,0,0,0,,Cái đó từ Camelot, đúng không?
Dialogue: 0,0:17:06.98,0:17:08.11,Default,,0,0,0,,Ừ.
Dialogue: 0,0:17:08.19,0:17:10.78,Default,,0,0,0,,Anh cũng cảm nhận được\Nma thuật của Merlin và Escanor.
Dialogue: 0,0:17:11.82,0:17:12.91,Default,,0,0,0,,Ta nhanh lên thôi.
Dialogue: 0,0:17:12.99,0:17:15.45,Default,,0,0,0,,Hẳn có chuyện kinh khủng\Nđang diễn ra ở đó.
Dialogue: 0,0:17:15.95,0:17:18.62,Default,,0,0,0,,Giờ đi hội ngộ với mẹ em thôi!
Dialogue: 0,0:17:20.08,0:17:21.54,Default,,0,0,0,,Hawk! Ánh sáng đó là gì vậy?
Dialogue: 0,0:17:21.62,0:17:22.88,Default,,0,0,0,,Em không biết!
Dialogue: 0,0:17:29.05,0:17:30.22,Default,,0,0,0,,Không đời nào.
Dialogue: 0,0:17:30.72,0:17:33.39,Default,,0,0,0,,Cậu ấy đã thật sự quay trở lại.
Dialogue: 0,0:17:33.47,0:17:37.39,Default,,0,0,0,,Có vẻ em gái tôi đã đúng khi chọn cậu.
Dialogue: 0,0:17:47.11,0:17:50.65,Default,,0,0,0,,{\i1}Anh về rồi, Elaine. Đội trưởng.{\i0}
Dialogue: 0,0:17:51.24,0:17:52.99,Default,,0,0,0,,Tôi mừng vì ngài bình an trở về, Ban.
Dialogue: 0,0:17:53.57,0:17:55.32,Default,,0,0,0,,Meliodas đâu?
Dialogue: 0,0:17:55.41,0:17:57.41,Default,,0,0,0,,Cảm xúc của anh ấy có an toàn không?
Dialogue: 0,0:17:57.99,0:17:59.83,Default,,0,0,0,,Đừng lo cho anh ấy, Công chúa.
Dialogue: 0,0:18:00.33,0:18:02.29,Default,,0,0,0,,Anh ấy sẽ quay lại.
Dialogue: 0,0:18:03.04,0:18:04.71,Default,,0,0,0,,Vì cô.
Dialogue: 0,0:18:07.29,0:18:11.01,Default,,0,0,0,,Mọi người cần nhanh chóng\Nđến chỗ Đội trưởng.
Dialogue: 0,0:18:11.63,0:18:12.63,Default,,0,0,0,,Tại sao chứ?
Dialogue: 0,0:18:15.26,0:18:20.02,Default,,0,0,0,,Tôi sẽ hội ngộ với mọi người\Nsau khi xong chút việc.
Dialogue: 0,0:18:39.62,0:18:40.45,Default,,0,0,0,,Guila!
Dialogue: 0,0:18:45.62,0:18:47.08,Default,,0,0,0,,Elaine, rút thôi!
Dialogue: 0,0:18:50.63,0:18:53.22,Default,,0,0,0,,Cơ thể cô cần được nghỉ ngơi!
Dialogue: 0,0:18:53.30,0:18:55.13,Default,,0,0,0,,Nếu cô ép bản thân thêm nữa…
Dialogue: 0,0:18:55.22,0:18:57.18,Default,,0,0,0,,Tôi ổn mà, Gerheade.
Dialogue: 0,0:18:57.26,0:18:58.64,Default,,0,0,0,,Cuối cùng,
Dialogue: 0,0:18:58.72,0:19:02.14,Default,,0,0,0,,mạng sống này chỉ là món quà tạm thời\Ntừ thần chú Oán Phản Hồn Pháp.
Dialogue: 0,0:19:03.98,0:19:05.69,Default,,0,0,0,,Đại Địa Nha.
Dialogue: 0,0:19:07.48,0:19:09.44,Default,,0,0,0,,{\an8}ĐẠI ĐỊA NHA
Dialogue: 0,0:19:16.95,0:19:19.28,Default,,0,0,0,,{\an8}Thác Cuồng Phong!
Dialogue: 0,0:19:26.92,0:19:29.00,Default,,0,0,0,,Thật tuyệt.
Dialogue: 0,0:19:29.08,0:19:30.59,Default,,0,0,0,,Quý cô Elaine thật tuyệt vời.
Dialogue: 0,0:19:31.59,0:19:32.59,Default,,0,0,0,,Elaine.
Dialogue: 0,0:19:32.67,0:19:37.18,Default,,0,0,0,,Ban đang tuyệt vọng đấu tranh\Ncho bạn anh ấy trong Luyện Ngục.
Dialogue: 0,0:19:38.72,0:19:41.68,Default,,0,0,0,,Vì vậy tôi cũng phải chiến đấu.
Dialogue: 0,0:19:42.39,0:19:45.14,Default,,0,0,0,,Như một Thánh Nữ của Rừng Yêu Tinh.
Dialogue: 0,0:19:46.73,0:19:47.81,Default,,0,0,0,,Nếu không,
Dialogue: 0,0:19:48.44,0:19:51.44,Default,,0,0,0,,tôi sẽ xấu hổ không dám gặp anh ấy…
Dialogue: 0,0:19:52.73,0:19:53.82,Default,,0,0,0,,Elaine.
Dialogue: 0,0:19:59.70,0:20:03.54,Default,,0,0,0,,{\i1}Ban, em muốn gặp anh lần cuối.{\i0}
Dialogue: 0,0:20:18.30,0:20:19.26,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:20:19.34,0:20:21.35,Default,,0,0,0,,Cái đó…
Dialogue: 0,0:20:23.76,0:20:25.39,Default,,0,0,0,,Xin lỗi vì bắt em phải chờ!
Dialogue: 0,0:20:32.06,0:20:36.24,Default,,0,0,0,,Ban, anh đã quay lại với em rồi.
Dialogue: 0,0:20:37.74,0:20:39.99,Default,,0,0,0,,Đây không phải là mơ, đúng không?
Dialogue: 0,0:20:40.53,0:20:41.45,Default,,0,0,0,,Ừ.
Dialogue: 0,0:20:41.53,0:20:45.45,Default,,0,0,0,,Cơ thể và cánh của em đã bị thu hồi.
Dialogue: 0,0:20:45.54,0:20:48.83,Default,,0,0,0,,Có vẻ em đã dùng quá nhiều sức mạnh rồi.
Dialogue: 0,0:20:51.58,0:20:52.75,Default,,0,0,0,,Nhưng em rất vui.
Dialogue: 0,0:20:53.34,0:21:00.30,Default,,0,0,0,,Em muốn được anh ôm như thế này\Nmột lần cuối cùng.
Dialogue: 0,0:21:04.93,0:21:07.22,Default,,0,0,0,,- Quý cô Elaine…\N- Quý cô Elaine!
Dialogue: 0,0:21:08.10,0:21:09.73,Default,,0,0,0,,Đây không phải lần cuối đâu.
Dialogue: 0,0:21:12.06,0:21:13.23,Default,,0,0,0,,{\an8}Biếu Tặng.
