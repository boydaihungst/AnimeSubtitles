Dialogue: 0,0:00:06.01,0:00:10.97,Default,,0,0,0,,LOẠT PHIM HOẠT HÌNH CỦA NETFLIX
Dialogue: 0,0:01:43.90,0:01:47.98,Default,,0,0,0,,{\i1}Một ngụm thêm 100 năm{\i0}
Dialogue: 0,0:01:48.07,0:01:52.32,Default,,0,0,0,,{\i1}Uống hết sẽ trường sinh bất tử{\i0}
Dialogue: 0,0:01:53.28,0:01:54.66,Default,,0,0,0,,{\i1}Tôi đang canh giữ dòng suối.{\i0}
Dialogue: 0,0:01:56.16,0:01:58.08,Default,,0,0,0,,{\i1}Khỏi mấy tên cướp như anh.{\i0}
Dialogue: 0,0:01:59.16,0:02:02.04,Default,,0,0,0,,{\i1}Tôi sẽ không cố giải thích với người phàm.{\i0}
Dialogue: 0,0:02:02.12,0:02:06.29,Default,,0,0,0,,{\i1}Anh tìm Suối Nguồn Sinh Mệnh làm gì?{\i0}
Dialogue: 0,0:02:06.79,0:02:11.21,Default,,0,0,0,,{\an8\i1}Phải chi Ban đến để lấy trộm mình đi{\i0}
Dialogue: 0,0:02:11.30,0:02:13.30,Default,,0,0,0,,{\an8\i1}thay vì Suối nguồn Sinh mệnh.{\i0}
Dialogue: 0,0:02:13.80,0:02:17.47,Default,,0,0,0,,{\an8\i1}Em đã thật sự hạnh phúc…{\i0}
Dialogue: 0,0:02:18.56,0:02:20.35,Default,,0,0,0,,Elaine!
Dialogue: 0,0:02:26.27,0:02:28.94,Default,,0,0,0,,{\an8}Mình đã làm gì vậy?
Dialogue: 0,0:02:29.52,0:02:34.28,Default,,0,0,0,,Suýt nữa thì hóa thành quái vật\Nở nơi này rồi.
Dialogue: 0,0:02:35.91,0:02:38.32,Default,,0,0,0,,Không biết mình đã ở đây\Nbao nhiêu thập kỷ rồi?
Dialogue: 0,0:02:38.91,0:02:42.83,Default,,0,0,0,,Không. Bao nhiêu thế kỷ mới phải chứ?
Dialogue: 0,0:02:42.91,0:02:45.04,Default,,0,0,0,,Đội trưởng!
Dialogue: 0,0:02:45.12,0:02:47.21,Default,,0,0,0,,Anh đang ở đâu?
Dialogue: 0,0:02:47.29,0:02:50.30,Default,,0,0,0,,Trả lời đi!
Dialogue: 0,0:02:53.34,0:02:55.09,Default,,0,0,0,,{\i1}Đây là câu chuyện từ xa xưa,{\i0}
Dialogue: 0,0:02:55.17,0:02:59.76,Default,,0,0,0,,{\i1}khi cõi người và cõi súc sinh\Nchưa bị tách ra.{\i0}
Dialogue: 0,0:03:04.35,0:03:06.27,Default,,0,0,0,,{\i1}Hai số phận được hé lộ…{\i0}
Dialogue: 0,0:03:06.35,0:03:08.52,Default,,0,0,0,,{\i1}Quỷ Vương và Nữ Thần Tối Cao{\i0}
Dialogue: 0,0:03:08.61,0:03:11.11,Default,,0,0,0,,{\i1}đã gieo lời nguyền Cuộc Sống Vĩnh Hằng\Nlên Meliodas{\i0}
Dialogue: 0,0:03:11.19,0:03:14.19,Default,,0,0,0,,{\i1}và lời nguyền Tái Sinh Vĩnh Cửu\Nlên Elizabeth.{\i0}
Dialogue: 0,0:03:15.32,0:03:16.86,Default,,0,0,0,,{\i1}Sự tái sinh vô tận.{\i0}
Dialogue: 0,0:03:16.95,0:03:18.32,Default,,0,0,0,,{\i1}Liên kết bằng tình yêu.{\i0}
Dialogue: 0,0:03:18.41,0:03:21.16,Default,,0,0,0,,{\i1}Và cái chết định mệnh\Nkhông thể nào thoát khỏi.{\i0}
Dialogue: 0,0:03:21.78,0:03:22.91,Default,,0,0,0,,{\i1}Hơn 3.000 năm qua,{\i0}
Dialogue: 0,0:03:22.99,0:03:26.54,Default,,0,0,0,,{\an8\i1}rất nhiều lần Meliodas đã chứng kiến\Nthời khắc cuối cùng của Elizabeth.{\i0}
Dialogue: 0,0:03:26.62,0:03:30.88,Default,,0,0,0,,{\an8\i1}Mục tiêu hành trình của anh\Nlà hóa giải lời nguyền này.{\i0}
Dialogue: 0,0:03:30.96,0:03:33.13,Default,,0,0,0,,{\an8}Một khi nhớ lại hết…
Dialogue: 0,0:03:33.21,0:03:36.01,Default,,0,0,0,,Elizabeth sẽ chết sau ba ngày.
Dialogue: 0,0:03:36.97,0:03:39.39,Default,,0,0,0,,{\i1}Để cứu Elizabeth\Nthoát khỏi cái chết định mệnh{\i0}
Dialogue: 0,0:03:39.47,0:03:41.14,Default,,0,0,0,,{\i1}sau khi hồi phục trí nhớ,{\i0}
Dialogue: 0,0:03:41.72,0:03:45.14,Default,,0,0,0,,{\i1}Meliodas chọn trở thành Quỷ Vương.{\i0}
Dialogue: 0,0:03:46.02,0:03:48.94,Default,,0,0,0,,{\i1}Ta sẽ trở thành Quỷ Vương\Nvà hóa giải lời nguyền.{\i0}
Dialogue: 0,0:03:49.81,0:03:53.07,Default,,0,0,0,,{\i1}Để ngăn chặn Meliodas\Ntrên con đường hủy diệt,{\i0}
Dialogue: 0,0:03:53.15,0:03:56.82,Default,,0,0,0,,{\i1}Elizabeth và những người còn lại\Ntrong Thất Hình Đại Tội đã lên đường.{\i0}
Dialogue: 0,0:03:57.40,0:04:00.11,Default,,0,0,0,,{\i1}Em sẽ hợp tác với Thất Hình Đại Tội,{\i0}
Dialogue: 0,0:04:00.20,0:04:02.78,Default,,0,0,0,,{\i1}và làm mọi chuyện có thể để ngăn anh\Ntrở thành Quỷ Vương!{\i0}
Dialogue: 0,0:04:05.04,0:04:07.00,Default,,0,0,0,,{\i1}Ở chốn địa ngục đó,{\i0}
Dialogue: 0,0:04:07.08,0:04:11.54,Default,,0,0,0,,{\i1}làm sao tìm được cảm xúc của Đội trưởng,\Nkhi không biết chúng ở đâu chứ?{\i0}
Dialogue: 0,0:04:13.46,0:04:14.88,Default,,0,0,0,,Để tôi đi.
Dialogue: 0,0:04:16.46,0:04:18.63,Default,,0,0,0,,Nhân danh Nữ Thần Tối Cao…
Dialogue: 0,0:04:19.22,0:04:20.68,Default,,0,0,0,,Nhân danh người ta yêu…
Dialogue: 0,0:04:22.14,0:04:27.10,Default,,0,0,0,,Chúng ta quyết định thành lập liên minh\Ngiữa Thất Hình Đại Tội và Stigma.
Dialogue: 0,0:04:27.18,0:04:29.98,Default,,0,0,0,,Tấn công!
Dialogue: 0,0:04:30.06,0:04:33.02,Default,,0,0,0,,{\i1}Sau 3.000 năm,{\i0}
Dialogue: 0,0:04:33.11,0:04:35.78,Default,,0,0,0,,{\i1}cuộc chiến chống tộc Ma Thần lại bắt đầu.{\i0}
Dialogue: 0,0:04:35.86,0:04:36.73,Default,,0,0,0,,{\i1}Thánh Chiến.{\i0}
Dialogue: 0,0:04:40.70,0:04:45.91,Default,,0,0,0,,{\i1}Trong khi đó, Estarossa mất kiểm soát,\Nphát điên vì tình yêu lệch lạc.{\i0}
Dialogue: 0,0:04:48.79,0:04:51.83,Default,,0,0,0,,Nếu Meliodas định cướp em từ tay anh,
Dialogue: 0,0:04:51.92,0:04:54.34,Default,,0,0,0,,{\an8}anh thà phá hủy em!
Dialogue: 0,0:04:54.42,0:04:57.34,Default,,0,0,0,,{\i1}Hãy là của anh!{\i0}
Dialogue: 0,0:05:02.09,0:05:05.18,Default,,0,0,0,,{\i1}Estarossa!\NNgươi sẽ bị các Giới Luật nuốt chửng đấy!{\i0}
Dialogue: 0,0:05:05.81,0:05:08.22,Default,,0,0,0,,Đừng làm hại ai nữa.
Dialogue: 0,0:05:08.81,0:05:10.85,Default,,0,0,0,,{\i1}Ta sẽ làm mọi điều ngươi bảo.{\i0}
Dialogue: 0,0:05:21.86,0:05:23.07,Default,,0,0,0,,Tôi sẽ ổn thôi.
Dialogue: 0,0:05:23.78,0:05:26.12,Default,,0,0,0,,Chị Elizabeth!
Dialogue: 0,0:06:57.00,0:06:59.92,Default,,0,0,0,,TẬP 1\NTỪ LUYỆN NGỤC
Dialogue: 0,0:07:04.13,0:07:07.89,Default,,0,0,0,,{\an8}Cảm ơn đã giúp cứu Quý cô Elizabeth.
Dialogue: 0,0:07:09.30,0:07:11.26,Default,,0,0,0,,{\an8}Đó không phải mục tiêu duy nhất của ta.
Dialogue: 0,0:07:11.85,0:07:14.89,Default,,0,0,0,,{\an8}Ta sẽ không bao giờ tha thứ\Ncho tên Estarossa đó.
Dialogue: 0,0:07:14.98,0:07:19.40,Default,,0,0,0,,{\an8}Mọi người nghĩ hắn đang định đi đâu?
Dialogue: 0,0:07:19.48,0:07:21.90,Default,,0,0,0,,Chuyện đó đâu quan trọng.
Dialogue: 0,0:07:21.98,0:07:26.90,Default,,0,0,0,,{\an8}Chúng ta chỉ cần trả thù cho Mael\Nvà kết thúc Thánh Chiến.
Dialogue: 0,0:07:28.99,0:07:32.74,Default,,0,0,0,,Tôi không hiểu vì sao Estarossa\Nlại bắt Quý cô Elizabeth.
Dialogue: 0,0:07:33.45,0:07:37.58,Default,,0,0,0,,{\an8}Tuy nhiên,\Nhiện giờ hắn quá mạnh và bất ổn.
Dialogue: 0,0:07:40.08,0:07:41.88,Default,,0,0,0,,Chúng ta phải nhanh lên!
Dialogue: 0,0:07:48.59,0:07:50.72,Default,,0,0,0,,Cuối cùng cũng đuổi kịp!
Dialogue: 0,0:07:50.80,0:07:53.39,Default,,0,0,0,,{\an8}Họ bay nhanh thật đó.
Dialogue: 0,0:07:53.47,0:07:55.39,Default,,0,0,0,,{\an8}- Xin lỗi nhé, Đội trưởng Đồ Thừa.\N- Hả?
Dialogue: 0,0:07:55.98,0:07:57.85,Default,,0,0,0,,Tôi đã nhờ cậu làm việc này cho mình.
Dialogue: 0,0:07:58.48,0:08:01.02,Default,,0,0,0,,{\an8}Sao cậu lại muốn\Nbám theo King và những người khác?
Dialogue: 0,0:08:01.11,0:08:02.90,Default,,0,0,0,,{\an8}Có chuyện gì mà đột ngột vậy?
Dialogue: 0,0:08:03.52,0:08:07.40,Default,,0,0,0,,{\an8\i1}Tôi có mục tiêu phải thực hiện.{\i0}
Dialogue: 0,0:08:07.49,0:08:09.36,Default,,0,0,0,,{\i1}Dù có phải hy sinh tính mạng…{\i0}
Dialogue: 0,0:08:09.99,0:08:13.41,Default,,0,0,0,,Mọi người, hãy theo sát tôi.
Dialogue: 0,0:08:16.25,0:08:18.75,Default,,0,0,0,,{\an8}THÁNH VỰC
Dialogue: 0,0:08:29.47,0:08:31.18,Default,,0,0,0,,{\an8}LUDOCIEL\NTHỦ LĨNH CỦA TỨ ĐẠI THIÊN SỨ
Dialogue: 0,0:08:31.26,0:08:33.93,Default,,0,0,0,,{\an8\i1}Cô ấy dự đoán được\NMeliodas sẽ tạo ra và tiến vào{\i0}
Dialogue: 0,0:08:34.01,0:08:35.89,Default,,0,0,0,,{\an8\i1}khu vực Bóng tối,{\i0}
Dialogue: 0,0:08:35.97,0:08:38.94,Default,,0,0,0,,{\an8\i1}và cả việc mình có những cách thức{\i0}
Dialogue: 0,0:08:39.02,0:08:40.94,Default,,0,0,0,,{\i1}để vào vùng đó luôn, phải không nhỉ?{\i0}
Dialogue: 0,0:08:42.61,0:08:44.94,Default,,0,0,0,,{\i1}Phải hết sức cẩn thận{\i0}
Dialogue: 0,0:08:45.02,0:08:46.94,Default,,0,0,0,,{\i1}để họ không đánh cắp Giới Luật,{\i0}
Dialogue: 0,0:08:47.57,0:08:49.53,Default,,0,0,0,,{\i1}Con gái của Belialuin.{\i0}
Dialogue: 0,0:08:50.03,0:08:51.82,Default,,0,0,0,,{\an8\i1}Còn nữa…{\i0}
Dialogue: 0,0:08:51.91,0:08:55.45,Default,,0,0,0,,{\an8\i1}Escanor, người nắm giữ Ân Sủng của Mael,\Nem trai mình…{\i0}
Dialogue: 0,0:08:56.24,0:08:58.62,Default,,0,0,0,,{\i1}Một kẻ ngạo mạn và khó chịu,{\i0}
Dialogue: 0,0:08:59.12,0:09:01.21,Default,,0,0,0,,{\i1}nhưng sức mạnh của hắn\Nthì không thể phủ nhận.{\i0}
Dialogue: 0,0:09:01.29,0:09:04.79,Default,,0,0,0,,{\i1}Hắn sẽ là chiến binh vĩ đại\Ntrong trận chiến với các vị thần vĩ đại.{\i0}
Dialogue: 0,0:09:06.05,0:09:09.63,Default,,0,0,0,,{\an8\i1}Cuối cùng, Hendrickson và Gilthunder.{\i0}
Dialogue: 0,0:09:09.72,0:09:10.84,Default,,0,0,0,,{\an8}HENDRICKSON, GILTHUNDER
Dialogue: 0,0:09:10.93,0:09:12.89,Default,,0,0,0,,{\an8\i1}Họ thiếu khả năng chiến đấu,{\i0}
Dialogue: 0,0:09:12.97,0:09:17.01,Default,,0,0,0,,{\an8\i1}nhưng lại sẵn sàng hy sinh{\i0}
Dialogue: 0,0:09:17.10,0:09:19.48,Default,,0,0,0,,{\i1}để bảo vệ mình và vỏ xác của mình.{\i0}
Dialogue: 0,0:09:20.06,0:09:23.19,Default,,0,0,0,,{\i1}Hendrickson đặc biệt quan tâm đến mình.{\i0}
Dialogue: 0,0:09:24.23,0:09:28.48,Default,,0,0,0,,{\i1}Hắn không chỉ là lá chắn bảo vệ\Nmà còn có thể là vỏ xác thay thế.{\i0}
Dialogue: 0,0:09:31.24,0:09:33.95,Default,,0,0,0,,Một khi chúng ta vào đây,\Ncoi như chấm hết.
Dialogue: 0,0:09:34.45,0:09:36.28,Default,,0,0,0,,Sẽ không còn đường quay ra.
Dialogue: 0,0:09:38.37,0:09:40.66,Default,,0,0,0,,Chỉ có một cách để thoát ra.
Dialogue: 0,0:09:41.54,0:09:45.63,Default,,0,0,0,,{\an8}Đó là giết Meliodas,\Nkẻ đang thao túng khu vực Bóng tối này.
Dialogue: 0,0:09:46.50,0:09:47.63,Default,,0,0,0,,Nhưng mà…
Dialogue: 0,0:09:50.21,0:09:52.22,Default,,0,0,0,,Không. Còn cách khác.
Dialogue: 0,0:09:53.22,0:09:55.47,Default,,0,0,0,,Khiến Meliodas trở lại như cũ.
Dialogue: 0,0:09:55.55,0:09:56.68,Default,,0,0,0,,Đúng không?
Dialogue: 0,0:10:00.73,0:10:03.94,Default,,0,0,0,,{\an8}Ấn tượng lắm, thiếu gia Meliodas.
Dialogue: 0,0:10:05.06,0:10:07.94,Default,,0,0,0,,{\an8}CUSACK, TỬ THẦN NGỦ GỤC\NQUỶ CẤP CAO NHẤT
Dialogue: 0,0:10:08.02,0:10:10.40,Default,,0,0,0,,{\an8}Nếu hắn lấy được những Giới Luật còn lại,
Dialogue: 0,0:10:10.48,0:10:13.24,Default,,0,0,0,,{\an8}Meliodas sẽ trở thành Quỷ Vương.
Dialogue: 0,0:10:13.82,0:10:15.49,Default,,0,0,0,,{\i1}Nếu chuyện đó xảy ra…{\i0}
Dialogue: 0,0:10:19.08,0:10:23.08,Default,,0,0,0,,{\an8\i1}ngươi sẽ hoàn thành\Nlời hứa của mình, Meliodas.{\i0}
Dialogue: 0,0:10:24.50,0:10:25.58,Default,,0,0,0,,Nhìn kìa!
Dialogue: 0,0:10:26.21,0:10:28.92,Default,,0,0,0,,Là tàn tích của Nhà hát Thiên đường.
Dialogue: 0,0:10:29.71,0:10:31.71,Default,,0,0,0,,- Đằng kia!\N- Elizabeth!
Dialogue: 0,0:10:37.47,0:10:38.89,Default,,0,0,0,,Elizabeth…
Dialogue: 0,0:10:41.72,0:10:43.35,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:10:51.90,0:10:56.28,Default,,0,0,0,,Thì ra khi để Giới Luật tung hoành\Nthì sẽ thành như vậy…
Dialogue: 0,0:10:56.86,0:11:01.24,Default,,0,0,0,,Elizabeth là của ta!
Dialogue: 0,0:11:01.74,0:11:03.29,Default,,0,0,0,,Trả Elizabeth lại cho bọn ta!
Dialogue: 0,0:11:03.37,0:11:05.41,Default,,0,0,0,,Chân Hồn Giáo Chastiefol!
Dialogue: 0,0:11:05.50,0:11:08.42,Default,,0,0,0,,Biến thể thứ năm "Tăng Cường"!
Dialogue: 0,0:11:24.89,0:11:26.77,Default,,0,0,0,,Cái kén khổng lồ đó là gì?
Dialogue: 0,0:11:27.73,0:11:29.52,Default,,0,0,0,,Xin lỗi đã để mọi người chờ.
Dialogue: 0,0:11:34.15,0:11:37.11,Default,,0,0,0,,Tưởng bọn ta sẽ không đến à?
Dialogue: 0,0:11:38.45,0:11:40.74,Default,,0,0,0,,Theo lẽ tự nhiên,\Ncác ngươi sẽ không may mắn thế.
Dialogue: 0,0:11:50.21,0:11:51.96,Default,,0,0,0,,Kia là…
Dialogue: 0,0:11:52.04,0:11:54.84,Default,,0,0,0,,Những con Quỷ được xem là cổ đại nhất.
Dialogue: 0,0:11:57.13,0:11:58.59,Default,,0,0,0,,Chandler…
Dialogue: 0,0:12:00.26,0:12:01.51,Default,,0,0,0,,và Cusack.
Dialogue: 0,0:12:02.18,0:12:04.68,Default,,0,0,0,,Họ sở hữu sức mạnh phi thường
Dialogue: 0,0:12:04.77,0:12:07.35,Default,,0,0,0,,và ở Quỷ Giới,\Nhọ giữ cương vị là thầy thướng dẫn
Dialogue: 0,0:12:07.44,0:12:09.40,Default,,0,0,0,,cho Meliodas và Zeldris.
Dialogue: 0,0:12:09.48,0:12:12.40,Default,,0,0,0,,Tuy nhiên, họ đã không xuất hiện\Ntrên tiền tuyến Thánh Chiến.
Dialogue: 0,0:12:12.48,0:12:13.94,Default,,0,0,0,,Quanh họ có rất nhiều bí ẩn.
Dialogue: 0,0:12:15.19,0:12:16.53,Default,,0,0,0,,Vậy thì…
Dialogue: 0,0:12:16.61,0:12:19.70,Default,,0,0,0,,Để mấy lão già này cho các ngươi thấy\Nbọn ta vẫn còn bí ẩn nhé?
Dialogue: 0,0:12:19.78,0:12:21.74,Default,,0,0,0,,Quả là sức mạnh phi thường.
Dialogue: 0,0:12:21.82,0:12:24.91,Default,,0,0,0,,Chỉ nhìn họ thôi\Ncũng cảm thấy bản thân sắp mất đi ý thức.
Dialogue: 0,0:12:39.13,0:12:42.47,Default,,0,0,0,,Thủ lĩnh của Tứ Đại Thiên Sứ,\NCon gái của Belialuiin,
Dialogue: 0,0:12:42.55,0:12:45.26,Default,,0,0,0,,Escanor,\Nngười đã đánh bại anh trai ta Estarossa…
Dialogue: 0,0:12:46.64,0:12:48.73,Default,,0,0,0,,Ta không cho phép các ngươi\Ncản trở Meliodas.
Dialogue: 0,0:12:51.85,0:12:56.19,Default,,0,0,0,,Vậy đây là lần đầu tiên chúng ta gặp mặt.
Dialogue: 0,0:12:56.94,0:12:58.90,Default,,0,0,0,,Và cũng là lần cuối cùng.
Dialogue: 0,0:13:13.46,0:13:17.63,Default,,0,0,0,,Sáu nguồn sức mạnh dày đặc và quyền năng\Nđang kiểm soát nơi này.
Dialogue: 0,0:13:17.71,0:13:23.47,Default,,0,0,0,,Rõ ràng sáu người đó\Nlà những chiến binh mạnh nhất.
Dialogue: 0,0:13:33.35,0:13:34.77,Default,,0,0,0,,Hài lòng chưa?
Dialogue: 0,0:13:37.36,0:13:38.61,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:13:38.69,0:13:43.16,Default,,0,0,0,,Đòn tấn công của ta không gây hề hấn gì.\NĐiên thật nhỉ.
Dialogue: 0,0:13:43.24,0:13:47.28,Default,,0,0,0,,Đồ ngốc! Ta sẽ giết bất cứ ai\Nmuốn làm hại thiếu gia!
Dialogue: 0,0:13:48.12,0:13:49.87,Default,,0,0,0,,Ta không cho phép điều đó.
Dialogue: 0,0:13:49.95,0:13:51.41,Default,,0,0,0,,Va Chạm Kép!
Dialogue: 0,0:13:55.79,0:14:00.88,Default,,0,0,0,,Có thật ngươi là thiên tài đã lừa\NQuỷ Vương và Nữ Thần Tối Cao không?
Dialogue: 0,0:14:01.51,0:14:04.39,Default,,0,0,0,,Nói thật thì ta thấy thất vọng đấy.
Dialogue: 0,0:14:04.97,0:14:07.26,Default,,0,0,0,,{\i1}Họ còn mạnh hơn cả Thập Giới.{\i0}
Dialogue: 0,0:14:07.35,0:14:08.43,Default,,0,0,0,,{\i1}Quái vật…{\i0}
Dialogue: 0,0:14:09.60,0:14:13.27,Default,,0,0,0,,{\i1}Quỷ cấp cao nhất Cusack.\NTổng sức mạnh, 168.000.{\i0}
Dialogue: 0,0:14:13.35,0:14:16.73,Default,,0,0,0,,{\an8\i1}Quỷ cấp cao nhất Chandler.\NTổng sức mạnh, 173.000.{\i0}
Dialogue: 0,0:14:22.90,0:14:23.74,Default,,0,0,0,,Merlin!
Dialogue: 0,0:14:29.45,0:14:32.29,Default,,0,0,0,,{\i1}Kỹ năng của họ không đùa được đâu.{\i0}
Dialogue: 0,0:14:34.67,0:14:36.75,Default,,0,0,0,,{\i1}Nhưng ưu tiên là thắng cuộc chiến này{\i0}
Dialogue: 0,0:14:36.83,0:14:41.34,Default,,0,0,0,,{\i1}và giành lấy chìa khóa\Nđưa Meliodas trở lại như cũ.{\i0}
Dialogue: 0,0:14:41.42,0:14:42.80,Default,,0,0,0,,{\i1}Sức mạnh chẳng giúp được gì.{\i0}
Dialogue: 0,0:14:43.97,0:14:45.76,Default,,0,0,0,,Cô ta định làm gì vậy?
Dialogue: 0,0:14:45.84,0:14:47.64,Default,,0,0,0,,Chiêu thức kỳ lạ quá…
Dialogue: 0,0:14:47.72,0:14:51.35,Default,,0,0,0,,{\an8}Chứ không thì hợp tác với cô ấy làm gì.
Dialogue: 0,0:14:59.15,0:15:00.40,Default,,0,0,0,,Tử Thần Ngủ Gục.
Dialogue: 0,0:15:00.48,0:15:03.53,Default,,0,0,0,,Đó là chiêu Thiểm Quang\Ncủa Ludociel hèn hạ.
Dialogue: 0,0:15:03.61,0:15:05.65,Default,,0,0,0,,Đúng là phiền phức.
Dialogue: 0,0:15:05.74,0:15:10.49,Default,,0,0,0,,Mấy lão già như chúng ta\Nphải tốn nhiều thời gian khởi động.
Dialogue: 0,0:15:10.58,0:15:11.54,Default,,0,0,0,,Nãi Chủy Quỷ.
Dialogue: 0,0:15:11.62,0:15:13.45,Default,,0,0,0,,{\i1}Sức mạnh chẳng giúp được gì.{\i0}
Dialogue: 0,0:15:13.54,0:15:14.58,Default,,0,0,0,,{\i1}Tuy nhiên…{\i0}
Dialogue: 0,0:15:14.66,0:15:19.13,Default,,0,0,0,,{\i1}Ludociel, thủ lĩnh của Tứ Đại Thiên Sứ.\NTổng sức mạnh, 201.000.{\i0}
Dialogue: 0,0:15:21.67,0:15:26.34,Default,,0,0,0,,{\i1}Sức mạnh của hắn rất quan trọng\Nở khu vực Bóng tối.{\i0}
Dialogue: 0,0:15:27.30,0:15:28.64,Default,,0,0,0,,Zeldris.
Dialogue: 0,0:15:29.22,0:15:32.68,Default,,0,0,0,,Ta nghe nói ngươi sở hữu\Nthanh kiếm nhanh nhất của Quỷ.
Dialogue: 0,0:15:48.53,0:15:50.07,Default,,0,0,0,,Thiếu gia Zeldris!
Dialogue: 0,0:15:50.16,0:15:51.66,Default,,0,0,0,,Thật tàn nhẫn.
Dialogue: 0,0:15:51.74,0:15:54.33,Default,,0,0,0,,Sao có thể khiến\Nmặt phụ nữ bị sẹo kia chứ?
Dialogue: 0,0:15:54.41,0:15:57.62,Default,,0,0,0,,Anh ngươi không dạy ngươi\Ncách đối xử với phụ nữ à?
Dialogue: 0,0:15:58.25,0:16:00.96,Default,,0,0,0,,Hắn đã gây tổn hại đến thân thể Margaret!
Dialogue: 0,0:16:01.04,0:16:05.80,Default,,0,0,0,,Thật đáng tiếc, ta không có người anh nào\Nnhập vào cơ thể của phụ nữ cả.
Dialogue: 0,0:16:07.72,0:16:09.22,Default,,0,0,0,,Cẩn thận!
Dialogue: 0,0:16:12.05,0:16:13.76,Default,,0,0,0,,Mấy chiêu trò ngu ngốc!
Dialogue: 0,0:16:14.52,0:16:16.68,Default,,0,0,0,,Ngươi đã cố cứu ta ư?
Dialogue: 0,0:16:16.77,0:16:18.81,Default,,0,0,0,,Ta đọc vị hết\Nnhững đòn tấn công của hắn mà!
Dialogue: 0,0:16:18.89,0:16:20.65,Default,,0,0,0,,Đồ ngốc vô vọng…
Dialogue: 0,0:16:24.90,0:16:27.99,Default,,0,0,0,,Ta chấp nhận ý nguyện bảo vệ ta của ngươi.
Dialogue: 0,0:16:28.07,0:16:29.32,Default,,0,0,0,,Đừng bao giờ can thiệp nữa.
Dialogue: 0,0:16:32.62,0:16:33.83,Default,,0,0,0,,{\an8}KIM QUANG SOI CHIẾU
Dialogue: 0,0:16:33.91,0:16:37.25,Default,,0,0,0,,Hãy thiêu rụi trong Ân Sủng của ta,\NThiểm Quang.
Dialogue: 0,0:16:57.77,0:16:59.06,Default,,0,0,0,,Chết tiệt.
Dialogue: 0,0:16:59.60,0:17:01.27,Default,,0,0,0,,Đội trưởng…
Dialogue: 0,0:17:13.20,0:17:15.41,Default,,0,0,0,,{\i1}Cẩn thận.{\i0}
Dialogue: 0,0:17:15.95,0:17:19.66,Default,,0,0,0,,{\i1}Nơi này sẽ đóng băng ngươi,\Nthiêu đốt ngươi,{\i0}
Dialogue: 0,0:17:20.25,0:17:21.87,Default,,0,0,0,,{\i1}khiến ngươi phân rã…{\i0}
Dialogue: 0,0:17:22.50,0:17:24.67,Default,,0,0,0,,{\i1}Luyện Ngục thống khổ…{\i0}
Dialogue: 0,0:17:25.21,0:17:27.63,Default,,0,0,0,,{\i1}sẽ gặm nhấm linh hồn ngươi.{\i0}
Dialogue: 0,0:17:28.51,0:17:31.47,Default,,0,0,0,,{\i1}Sau khi mạo hiểm trong vô vọng,{\i0}
Dialogue: 0,0:17:31.97,0:17:37.35,Default,,0,0,0,,{\i1}ngươi sẽ trở thành quái vật\Nlang thang trong Luyện Ngục.{\i0}
Dialogue: 0,0:18:00.25,0:18:02.58,Default,,0,0,0,,Nghe này, Ban.
Dialogue: 0,0:18:02.66,0:18:04.71,Default,,0,0,0,,Đừng có phàn nàn.
Dialogue: 0,0:18:05.63,0:18:07.67,Default,,0,0,0,,Dù thế nào đi nữa,
Dialogue: 0,0:18:07.75,0:18:10.55,Default,,0,0,0,,ta cũng sẽ tìm thấy cảm xúc của Đội trưởng
Dialogue: 0,0:18:11.13,0:18:14.05,Default,,0,0,0,,và trở lại nơi mọi người đang chờ ta.
Dialogue: 0,0:18:15.89,0:18:21.18,Default,,0,0,0,,Mà tìm cảm xúc của Đội trưởng\Nbằng cách nào đây?
Dialogue: 0,0:18:22.73,0:18:26.23,Default,,0,0,0,,Nhìn nó có giống linh hồn không nhỉ?
Dialogue: 0,0:18:45.67,0:18:51.84,Default,,0,0,0,,Hãy cùng nhau thoát khỏi địa ngục này.
Dialogue: 0,0:18:56.39,0:18:57.47,Default,,0,0,0,,Chết tiệt.
Dialogue: 0,0:19:10.27,0:19:12.40,Default,,0,0,0,,Đau quá!
Dialogue: 0,0:19:12.48,0:19:13.49,Default,,0,0,0,,Chết tiệt.
Dialogue: 0,0:19:13.57,0:19:15.07,Default,,0,0,0,,Đội trưởng!
Dialogue: 0,0:19:15.15,0:19:17.16,Default,,0,0,0,,Anh đang ở đâu?
Dialogue: 0,0:19:17.78,0:19:20.08,Default,,0,0,0,,Trả lời đi! Chết tiệt!
Dialogue: 0,0:19:24.12,0:19:25.71,Default,,0,0,0,,Cái gì thế?
Dialogue: 0,0:19:34.46,0:19:40.51,Default,,0,0,0,,Ta sẽ không bỏ cuộc dễ dàng vậy đâu!
Dialogue: 0,0:19:44.64,0:19:47.56,Default,,0,0,0,,Đúng lúc lắm! Ta vừa bắt đầu thấy chán!
Dialogue: 0,0:20:02.95,0:20:05.62,Default,,0,0,0,,{\an8}Nếu thích chơi thì ta sẽ chiều!
Dialogue: 0,0:20:05.70,0:20:08.12,Default,,0,0,0,,{\an8}Tới đây, đồ quái vật!
Dialogue: 0,0:20:34.44,0:20:35.57,Default,,0,0,0,,{\i1}Thật đấy…{\i0}
Dialogue: 0,0:20:36.07,0:20:38.11,Default,,0,0,0,,{\i1}đủ lắm rồi.{\i0}
Dialogue: 0,0:20:38.20,0:20:41.16,Default,,0,0,0,,Ngươi nghĩ ta đã chiến đấu\Nbao nhiêu thập kỷ rồi?
Dialogue: 0,0:20:41.70,0:20:45.41,Default,,0,0,0,,Ta đang đi tìm bạn của ta.
Dialogue: 0,0:20:46.12,0:20:47.37,Default,,0,0,0,,Nhưng…
Dialogue: 0,0:20:48.04,0:20:49.92,Default,,0,0,0,,chắc là ta hơi mệt một chút.
Dialogue: 0,0:20:56.30,0:20:57.13,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:20:58.26,0:21:02.14,Default,,0,0,0,,Thứ này bị gì vậy?\NHay là nó thích mình thật rồi?
Dialogue: 0,0:21:04.97,0:21:08.85,Default,,0,0,0,,Đội trưởng. Hãy sớm ra khỏi đây thôi.
Dialogue: 0,0:21:08.93,0:21:12.69,Default,,0,0,0,,Mọi người ở phía bên kia\Nđều đang vất vả vì anh đấy.
Dialogue: 0,0:21:14.19,0:21:18.44,Default,,0,0,0,,{\an8}Và tôi muốn sớm gặp…
Dialogue: 0,0:21:20.28,0:21:22.78,Default,,0,0,0,,{\an8}cô nàng đặc biệt của tôi nữa.
Dialogue: 0,0:21:31.16,0:21:33.17,Default,,0,0,0,,{\i1}Tôi cũng vậy!{\i0}
Dialogue: 0,0:21:34.88,0:21:36.09,Default,,0,0,0,,Cái gì thế?
Dialogue: 0,0:21:37.92,0:21:40.26,Default,,0,0,0,,Cái thứ như con rồng đó đâu rồi?
Dialogue: 0,0:21:43.22,0:21:46.01,Default,,0,0,0,,Anh ấy đã ở đây sao?
Dialogue: 0,0:21:51.98,0:21:53.52,Default,,0,0,0,,Này, anh bạn.
Dialogue: 0,0:21:54.15,0:21:55.90,Default,,0,0,0,,Thấy thế nào rồi?
Dialogue: 0,0:22:00.86,0:22:01.90,Default,,0,0,0,,Ban!
Dialogue: 0,0:23:47.34,0:23:51.93,Default,,0,0,0,,{\an8}Biên dịch: Võ Anh Vinh
