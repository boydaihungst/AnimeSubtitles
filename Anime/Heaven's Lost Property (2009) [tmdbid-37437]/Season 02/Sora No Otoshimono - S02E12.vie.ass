Dialogue: 0,0:00:34.69,0:00:37.12,Main,,0000,0000,0000,,Tôi đến đây chỉ muốn nói như thế thôi.
Dialogue: 0,0:00:40.60,0:00:41.47,Main,,0000,0000,0000,,Đợi đã.
Dialogue: 0,0:00:44.14,0:00:49.17,Main,,0000,0000,0000,,Cảm ơn cậu đã thật lòng yêu mến \Nnhững đứa con gái của mình.{\fad(0,600)}
Dialogue: 0,0:02:24.68,0:02:27.58,Main,,0000,0000,0000,,Quá trình hồi phục ký ức: 100% hoàn tất.
Dialogue: 0,0:02:28.04,0:02:30.08,Main,,0000,0000,0000,,Quá trình ổn định bộ phản ứng: hoàn tất.
Dialogue: 0,0:02:30.75,0:02:33.48,Main,,0000,0000,0000,,Ngắt chương trình tự động sữa chữa.
Dialogue: 0,0:02:35.67,0:02:37.38,Main,,0000,0000,0000,,Không sao nữa rồi, Alpha.
Dialogue: 0,0:02:38.88,0:02:41.27,Main,,0000,0000,0000,,Chị ấy đã đỡ hơn rồi ạ, senpai?
Dialogue: 0,0:02:41.27,0:02:42.76,Main,,0000,0000,0000,,Thì chứ còn gì nữa.
Dialogue: 0,0:02:42.76,0:02:46.58,Main,,0000,0000,0000,,Giờ thì tôi đã có cánh lại rồi, nên năng lực xử lý dữ liệu \Ncũng đã hồi phục theo.
Dialogue: 0,0:02:46.58,0:02:48.09,Main,,0000,0000,0000,,Chuyện này dễ như ăn bánh vậy.
Dialogue: 0,0:02:49.08,0:02:52.69,Main,,0000,0000,0000,,Vậy... senpai, chị chỉnh giúp em cái này luôn đi.
Dialogue: 0,0:02:53.07,0:02:56.00,Main,,0000,0000,0000,,Lúc nãy chị tăng cường sức mạnh cho em còn gì.
Dialogue: 0,0:02:56.46,0:02:59.26,Main,,0000,0000,0000,,Làm lại như thế cho em đi! Ngầu khiếp luôn à!
Dialogue: 0,0:02:59.26,0:03:00.39,Main,,0000,0000,0000,,Chuyện đó thì miễn nhé.
Dialogue: 0,0:03:00.39,0:03:02.20,Main,,0000,0000,0000,,Sao thế?
