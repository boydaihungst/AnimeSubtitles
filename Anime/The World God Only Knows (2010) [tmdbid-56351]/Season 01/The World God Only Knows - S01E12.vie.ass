Dialogue: 0,0:20:20.01,0:20:22.00,Default,Seina,0000,0000,0000,,Cậu đây rồi.
Dialogue: 0,0:20:22.00,0:20:25.19,Default,Seina,0000,0000,0000,,Cậu còn đủ sức chiến đấu mà!
Dialogue: 0,0:20:25.66,0:20:27.20,Default,A,0000,0000,0000,,Đúng rồi!
Dialogue: 0,0:20:28.20,0:20:29.85,Default,C,0000,0000,0000,,Chỉ một chút nữa thôi!
Dialogue: 0,0:20:29.85,0:20:31.70,Default,F,0000,0000,0000,,Cậu sẽ làm được mà!
Dialogue: 0,0:20:32.57,0:20:34.27,Default,Keima,0000,0000,0000,,Rina của {\i1}Pino II{\i0}!
Dialogue: 0,0:20:34.27,0:20:35.98,Default,Keima,0000,0000,0000,,Hibiki của {\i1}Wai Wai{\i0}!
Dialogue: 0,0:20:35.98,0:20:37.53,Default,Keima,0000,0000,0000,,Ryo của {\i1}Fairy{\i0}!
Dialogue: 0,0:20:37.93,0:20:38.86,Default,Keima,0000,0000,0000,,Tear!
Dialogue: 0,0:20:38.86,0:20:39.87,Default,Keima,0000,0000,0000,,Hitomi!
Dialogue: 0,0:20:39.87,0:20:40.67,Default,Keima,0000,0000,0000,,Tsukasa!
Dialogue: 0,0:20:40.67,0:20:41.67,Default,Keima,0000,0000,0000,,Izumi!
Dialogue: 0,0:20:41.67,0:20:42.22,Default,Keima,0000,0000,0000,,Ryoko!
