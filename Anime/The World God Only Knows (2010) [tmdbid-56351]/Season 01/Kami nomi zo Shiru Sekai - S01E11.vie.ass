Dialogue: 0,0:04:02.80,0:04:04.64,Default,Head,0000,0000,0000,,Chào mọi người!
Dialogue: 0,0:04:04.64,0:04:06.30,Default,Head,0000,0000,0000,,Xin lỗi vì đã để các cậu đợi lâu.
Dialogue: 0,0:04:06.30,0:04:10.47,Default,Head,0000,0000,0000,,Nào, chúng ta vào việc thôi!
Dialogue: 0,0:04:12.31,0:04:13.39,Default,Head,0000,0000,0000,,Có chuyện gì thế?
Dialogue: 0,0:04:13.39,0:04:15.27,Default,A,0000,0000,0000,,Bọn em không mở được cửa.
Dialogue: 0,0:04:15.81,0:04:18.57,Default,C,0000,0000,0000,,Có ai đổi mật khẩu rồi hay sao ấy.
Dialogue: 0,0:04:20.86,0:04:22.57,Default,D,0000,0000,0000,,Chủ tịch.
Dialogue: 0,0:04:29.91,0:04:31.37,Default,Head,0000,0000,0000,,Cái này hơi khó đọc một tí, nhưng hình như là...
Dialogue: 0,0:04:33.21,0:04:39.21,Default,Head,0000,0000,0000,,Tôi phản đối việc thành lập phòng nghe nhìn... Shiomiya Shiori?
Dialogue: 0,0:04:42.26,0:04:44.34,Default,Head,0000,0000,0000,,Này!
Dialogue: 0,0:04:44.34,0:04:45.80,Default,Head,0000,0000,0000,,Shiomiya!
Dialogue: 0,0:04:45.80,0:04:47.80,Default,Head,0000,0000,0000,,Ra đây ngay!
Dialogue: 0,0:04:54.44,0:04:55.73,Default,Head,0000,0000,0000,,Này!
Dialogue: 0,0:04:55.73,0:04:56.98,Default,Head,0000,0000,0000,,Mở cửa ra!
Dialogue: 0,0:04:57.69,0:05:01.28,Default,Elsie,0000,0000,0000,,Shiori tự nhốt mình trong thư viện rồi.
Dialogue: 0,0:05:01.28,0:05:02.78,Default,Elsie,0000,0000,0000,,Sao lại vây chứ?
Dialogue: 0,0:05:03.44,0:05:05.49,Default,Keima,0000,0000,0000,,Đã có nhiều điềm báo trước cho điều này rồi.
Dialogue: 0,0:05:06.11,0:05:09.49,Default,Keima,0000,0000,0000,,Cô cứ cắm mặt vào mấy cái xe cứu hóa nên có để ý gì đâu.
Dialogue: 0,0:05:11.04,0:05:17.25,Default,Keima,0000,0000,0000,,Tuy nhiên người không nghe được độc thoại nội tâm của cô ta như cô thì bất ngờ cũng phải thôi.
Dialogue: 0,0:05:17.25,0:05:19.63,Default,Elsie,0000,0000,0000,,Vậy chúng ta nên làm gì bây giờ ạ?
Dialogue: 0,0:05:19.63,0:05:22.30,Default,Elsie,0000,0000,0000,,Có nên ngăn cô ấy lại không?
Dialogue: 0,0:05:22.30,0:05:26.05,Signs,Keima,0000,0000,0000,,Route: kiểu đường đi nước bước trong gal-game nói riêng và Visual Novel nói chung.
Dialogue: 0,0:05:22.30,0:05:26.05,Default,Keima,0000,0000,0000,,Điều này còn phải xem Route tôi chọn diễn biến kiểu gì đã.
Dialogue: 0,0:05:29.72,0:05:32.01,Default,Head,0000,0000,0000,,Shiomiya!
Dialogue: 0,0:05:34.56,0:05:37.69,Default,Shiori,0000,0000,0000,,{\i1}Mình làm liều thật đấy...{\i0}
