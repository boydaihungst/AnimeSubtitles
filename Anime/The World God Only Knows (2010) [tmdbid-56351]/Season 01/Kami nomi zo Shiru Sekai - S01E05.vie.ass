Dialogue: 0,0:00:01.81,0:00:21.02,Default,Fans,0000,0000,0000,,Kanon!
Dialogue: 0,0:00:22.39,0:00:23.81,Default,Kanon,0000,0000,0000,,Hội trường Naru giờ là của tôi!
Dialogue: 0,0:00:23.81,0:00:25.26,Default,Kanon,0000,0000,0000,,Bắt đầu nào!
Dialogue: 0,0:02:00.06,0:02:00.97,Default,N,0000,0000,0000,,Và bây giờ!
Dialogue: 0,0:02:01.54,0:02:05.34,Default,N,0000,0000,0000,,Giải thưởng NNS cho nghệ sĩ không chuyên xuất sắc nhất sẽ thuộc về...
Dialogue: 0,0:02:13.30,0:02:15.85,Default,N,0000,0000,0000,,Nakagawa Kanon!
Dialogue: 0,0:02:19.43,0:02:20.64,Default,Elsie,0000,0000,0000,,Có vậy chứ!
Dialogue: 0,0:02:20.64,0:02:22.87,Default,Elsie,0000,0000,0000,,Thế mới đúng chứ, Kanon-chan!
Dialogue: 0,0:02:22.87,0:02:25.25,Default,N,0000,0000,0000,,Xin chúc mừng, Kanon!
Dialogue: 0,0:02:25.25,0:02:26.76,Default,Kanon,0000,0000,0000,,Xin cảm ơn mọi người.
Dialogue: 0,0:02:28.31,0:02:29.77,Default,Elsie,0000,0000,0000,,Cô ấy dễ thương quá đi mất!
Dialogue: 0,0:02:29.77,0:02:32.68,Default,N,0000,0000,0000,,Sau đây chúng tôi xin nhường lại sân khấu cho bạn!
Dialogue: 0,0:02:32.68,0:02:34.27,Default,N,0000,0000,0000,,Với bài hát "All 4 You"!
Dialogue: 0,0:02:38.86,0:02:42.33,Default,Elsie,0000,0000,0000,,Kanon đạt giải nghệ sĩ không chuyên xuất sắc nhất kìa, Kami-niisama.
Dialogue: 0,0:02:42.33,0:02:43.58,Default,Keima,0000,0000,0000,,Ai cơ?
Dialogue: 0,0:02:43.58,0:02:46.13,Default,Elsie,0000,0000,0000,,Thần tượng âm nhạc nổi tiếng nhất hiện giờ đó!
Dialogue: 0,0:02:46.13,0:02:46.91,Default,Elsie,0000,0000,0000,,Anh coi kìa!
Dialogue: 0,0:02:49.30,0:02:50.31,Default,Keima,0000,0000,0000,,Nhảm nhí.
Dialogue: 0,0:02:50.91,0:02:52.32,Default,Elsie,0000,0000,0000,,Hể...?
Dialogue: 0,0:02:52.32,0:02:54.20,Default,Elsie,0000,0000,0000,,Anh để ý kĩ một chút đi mà.
Dialogue: 0,0:02:54.20,0:02:55.92,Default,Elsie,0000,0000,0000,,Không phải cô ấy dễ thương lắm sao?
Dialogue: 0,0:02:55.92,0:02:58.48,Default,Keima,0000,0000,0000,,Cô đúng là người của thời đại truyền hình đại chúng.
Dialogue: 0,0:03:04.07,0:03:06.93,Default,Mari,0000,0000,0000,,Con bắt chước Kanon thắt ruy-băng hình nơ đấy à?
Dialogue: 0,0:03:08.75,0:03:12.36,Default,Elsie,0000,0000,0000,,Con chỉ muốn cảm nhận càm giác của một thần tượng thôi ấy mà...
Dialogue: 0,0:03:13.98,0:03:18.07,Default,Keima,0000,0000,0000,,Thần tượng truyền hình hiện nay toàn là phế tích thời tiền sử thôi.
Dialogue: 0,0:03:19.46,0:03:21.07,Default,Elsie,0000,0000,0000,,Ý anh là gì vậy ạ?
Dialogue: 0,0:03:23.36,0:03:26.74,Default,Keima,0000,0000,0000,,Chúng ta giờ đang sống trong thời đại của những thần tượng game!
Dialogue: 0,0:03:27.59,0:03:29.87,Default,All,0000,0000,0000,,Thời đại của thần tượng game!
Dialogue: 0,0:03:29.87,0:03:36.16,Default,Keima,0000,0000,0000,,Theo thời gian, "thần tượng" cũng sẽ trở nên tha hóa so với hình ảnh ban đầu của họ.
Dialogue: 0,0:03:36.16,0:03:41.48,Default,Keima,0000,0000,0000,,Nhưng những thần tượng game miễn nhiễm với điều đó chính là đại diện cho những gì chúng ta theo đuổi.
Dialogue: 0,0:03:45.39,0:03:46.51,Default,Elsie,0000,0000,0000,,Em phản đối!
Dialogue: 0,0:03:47.00,0:03:50.02,Default,Elsie,0000,0000,0000,,Anh hãy nhìn xem cô ấy dễ thương đến nhường nào đi.
Dialogue: 0,0:03:50.02,0:03:53.14,Default,Elsie,0000,0000,0000,,Hơn tất tần tật mấy cô gái ảo của anh là cái chắc!
Dialogue: 0,0:03:55.02,0:03:59.52,Default,Keima,0000,0000,0000,,Thực ra thì, những thần tượng thật luôn bị trói buộc bởi cái thế giới thật đó.
Dialogue: 0,0:04:01.24,0:04:03.06,Default,Keima,0000,0000,0000,,Thần tượng nghĩa là gì?
Dialogue: 0,0:04:03.06,0:04:05.46,Default,Keima,0000,0000,0000,,Đó chính hiện thân cho quan niệm về một ý tưởng bất diệt.
Dialogue: 0,0:04:05.46,0:04:10.03,Default,Keima,0000,0000,0000,,Thế nhưng những thần tượng thật thì không thể chống chọi nổi với thời gian!
Dialogue: 0,0:04:10.03,0:04:12.25,Default,Keima,0000,0000,0000,,Da họ bắt đầu lão hóa, các nếp nhăn sẽ đua nhau xuất hiện.
Dialogue: 0,0:04:12.25,0:04:14.41,Default,Keima,0000,0000,0000,,Họ rượu bia, hút thuốc, nghỉ hưu vì scandal,
Dialogue: 0,0:04:14.41,0:04:19.15,Default,Keima,0000,0000,0000,,còn khi họ già đi, cô sẽ phải nghe những điều không hề muốn.
Dialogue: 0,0:04:20.16,0:04:20.79,Default,Keima,0000,0000,0000,,Thế nhưng!
Dialogue: 0,0:04:20.79,0:04:22.67,Default,Keima,0000,0000,0000,,Thần tượng game thì khác!
Dialogue: 0,0:04:23.22,0:04:27.81,Default,Keima,0000,0000,0000,,Không như những thần tượng thật, họ đổi mới qua thời gian.
Dialogue: 0,0:04:28.40,0:04:30.07,Default,Keima,0000,0000,0000,,Lúc đầu họ chỉ là những hình ảnh thô kệch.
Dialogue: 0,0:04:30.07,0:04:32.40,Default,Keima,0000,0000,0000,,Nhưng sau đó họ đã có giọng nói và màu sắc đẹp hơn.
Dialogue: 0,0:04:31.37,0:04:33.48,Default,Girl,0000,0000,0000,,Yay! Mình nói được!
Dialogue: 0,0:04:32.40,0:04:34.23,Default,Keima,0000,0000,0000,,Càng ngày họ càng được cách tân!
Dialogue: 0,0:04:34.23,0:04:37.34,Default,Keima,0000,0000,0000,,Khi đồ họa đủ mạnh, họ trở thành những hình tượng 3D.
Dialogue: 0,0:04:37.34,0:04:39.42,Default,Keima,0000,0000,0000,,Mỗi người trong số họ có một câu truyện của riêng mình.
Dialogue: 0,0:04:39.42,0:04:42.61,Default,Keima,0000,0000,0000,,Họ có hàng tá ưu điểm hơn hẳn những thần tượng thật.
Dialogue: 0,0:04:44.79,0:04:47.73,Default,Keima,0000,0000,0000,,Trong khi đó, cô thấy thần tượng thật có tiến bộ được tí nào không?
Dialogue: 0,0:04:47.64,0:04:49.07,Alt,Real,0000,0000,0000,,Xin chào!
Dialogue: 0,0:04:47.73,0:04:50.06,Default,Keima,0000,0000,0000,,Dậm chân tại chỗ!
Dialogue: 0,0:04:50.06,0:04:54.15,Default,Keima,0000,0000,0000,,Giờ đã là một thời đại mới, thời đại của những thần tượng game không bao giờ biến chất!
Dialogue: 0,0:04:54.15,0:04:55.38,Default,Girl,0000,0000,0000,,Xin chào!
Dialogue: 0,0:04:57.00,0:05:00.57,Default,Keima,0000,0000,0000,,Những thần tượng thật chỉ như một cái tàu sắp chìm mà thôi!
Dialogue: 0,0:05:00.57,0:05:04.50,Default,Keima,0000,0000,0000,,Tất cả hãy hướng tới kỉ nguyên mới!
Dialogue: 0,0:05:10.05,0:05:11.45,Default,Keima,0000,0000,0000,,Một con tàu mới!
Dialogue: 0,0:05:11.45,0:05:13.90,Default,Keima,0000,0000,0000,,Cho một thế giới!
Dialogue: 0,0:05:13.90,0:05:15.95,Default,Elsie,0000,0000,0000,,Đợi em với!
Dialogue: 0,0:05:18.61,0:05:20.08,Default,Mari,0000,0000,0000,,Hai đứa...
Dialogue: 0,0:05:20.91,0:05:23.21,Default,Mari,0000,0000,0000,,...ăn thì ăn cho xong đi!
Dialogue: 0,0:05:27.39,0:05:28.68,Default,N,0000,0000,0000,,Cảm ơn các bạn!
Dialogue: 0,0:05:28.68,0:05:30.61,Default,N,0000,0000,0000,,Xin một tràng pháo tay cho Nakagawa Kanon!
Dialogue: 0,0:05:30.61,0:05:32.81,Default,Kanon,0000,0000,0000,,{\fad(1,300)}Cảm ơn mọi người rất nhiều.
Dialogue: 0,0:05:38.11,0:05:40.06,Default,Elsie,0000,0000,0000,,Tuy Kami-sama nói thế,
Dialogue: 0,0:05:40.68,0:05:43.56,Default,Elsie,0000,0000,0000,,nhưng mình vẫn nghĩ Kanon-chan là dễ thương nhất.
Dialogue: 0,0:05:51.80,0:05:53.07,Default,Elsie,0000,0000,0000,,Yeah!
Dialogue: 0,0:05:57.95,0:06:01.45,Default,Mari,0000,0000,0000,,{\i1}Kanon-chan{\i0}, đi tắm đi con!
Dialogue: 0,0:06:01.45,0:06:03.24,Default,Elsie,0000,0000,0000,,V-Vâng ạ...
Dialogue: 0,0:06:09.83,0:06:12.20,Default,Elsie,0000,0000,0000,,Cuối cùng cũng đến giờ ăn trưa!
Dialogue: 0,0:06:12.20,0:06:13.75,Default,Elsie,0000,0000,0000,,Kami-niisama!
Dialogue: 0,0:06:13.75,0:06:15.66,Default,Elsie,0000,0000,0000,,Mình cùng xuống căng tin đi...
Dialogue: 0,0:06:24.81,0:06:26.07,Default,A,0000,0000,0000,,Thật đấy à?
Dialogue: 0,0:06:26.07,0:06:28.02,Default,B,0000,0000,0000,,Ừ, chính mắt tớ thấy cố ấy mà.
Dialogue: 0,0:06:31.02,0:06:32.32,Default,Elsie,0000,0000,0000,,Chuyện gì thể nhỉ?
Dialogue: 0,0:06:32.32,0:06:35.18,Default,Elsie,0000,0000,0000,,Không khí trong lớp hôm nay lạ quá...
Dialogue: 0,0:06:35.18,0:06:37.69,Default,Chihiro,0000,0000,0000,,Hôm nay có vẻ đông vui ghê.
Dialogue: 0,0:06:37.69,0:06:39.86,Default,A,0000,0000,0000,,Thì cũng đã hai tháng rồi còn gì.
Dialogue: 0,0:06:42.11,0:06:44.44,Default,Elsie,0000,0000,0000,,Hai tháng gì vậy?
Dialogue: 0,0:06:44.44,0:06:47.86,Default,Chihiro,0000,0000,0000,,À, đúng rồi, cậu chưa gặp cô ấy bao giờ nhỉ.
Dialogue: 0,0:06:47.86,0:06:49.40,Default,A,0000,0000,0000,,Cô ấy đi học lại rồi.
Dialogue: 0,0:06:49.40,0:06:52.70,Default,Chihiro,0000,0000,0000,,Nakagawa Kanon ấy!
Dialogue: 0,0:06:57.85,0:07:00.16,Default,Game,0000,0000,0000,,Nhìn này, không có ai ở đây đâu.
Dialogue: 0,0:07:00.67,0:07:03.14,Default,Game,0000,0000,0000,,Đây chính là chỗ bí mật của riêng mình.
Dialogue: 0,0:07:18.79,0:07:21.09,Default,Kanon,0000,0000,0000,,Ca sĩ không chuyên xuất sắc nhất à?
Dialogue: 0,0:07:22.04,0:07:24.21,Default,Kanon,0000,0000,0000,,Mình đã cố gắng hết mình,
Dialogue: 0,0:07:24.63,0:07:26.10,Default,Kanon,0000,0000,0000,,hết mình...
Dialogue: 0,0:07:27.33,0:07:30.80,Default,Kanon,0000,0000,0000,,Các bạn gái khác đều rất năng động và quyến rũ.
Dialogue: 0,0:07:30.80,0:07:34.86,Default,Kanon,0000,0000,0000,,Nhưng thật không ngờ họ lại trao giải cho một người đơn điệu, ăn mặc lỗi mốt như mình.
Dialogue: 0,0:07:37.61,0:07:40.57,Default,Kanon,0000,0000,0000,,Có lẽ giờ mình đã thực sự là một thần tượng rồi...
Dialogue: 0,0:07:48.39,0:07:51.00,Default,Kanon,0000,0000,0000,,Được rồi, từ giờ phải tập trung vào học thôi!
Dialogue: 0,0:07:53.41,0:07:55.57,Default,Kanon,0000,0000,0000,,Ơ, có người khác ở đây.
Dialogue: 0,0:07:59.32,0:08:01.49,Default,Kanon,0000,0000,0000,,Này, nãy giờ cậu có nghe thấy mấy lời mình nói không?
Dialogue: 0,0:08:02.94,0:08:04.20,Default,Kanon,0000,0000,0000,,Xin chào.
Dialogue: 0,0:08:04.20,0:08:07.42,Default,Kanon,0000,0000,0000,,Thật không ngờ cậu cũng biết chỗ này đấy.
Dialogue: 0,0:08:10.52,0:08:11.52,Default,Keima,0000,0000,0000,,Cô là ai thế?
Dialogue: 0,0:08:16.08,0:08:18.52,Default,Keima,0000,0000,0000,,Tôi đang bận, xin đừng bắt chuyện.
Dialogue: 0,0:08:21.12,0:08:22.64,Default,Kanon,0000,0000,0000,,Cũng phải.
Dialogue: 0,0:08:22.64,0:08:25.04,Default,Kanon,0000,0000,0000,,Tất nhiên vẫn còn những người không nhận ra mình.
Dialogue: 0,0:08:35.90,0:08:37.13,Default,Kanon,0000,0000,0000,,Tại sao...
Dialogue: 0,0:08:37.86,0:08:40.01,Default,Kanon,0000,0000,0000,,Tại sao cậu ta lại không nhận ra mình?
Dialogue: 0,0:08:40.01,0:08:43.19,Default,Kanon,0000,0000,0000,,Mình là một thần tượng cơ mà?
Dialogue: 0,0:08:43.19,0:08:44.39,Default,Kanon,0000,0000,0000,,Nói dối!
Dialogue: 0,0:08:44.39,0:08:46.44,Default,Kanon,0000,0000,0000,,Nhất định là nói dối!
Dialogue: 0,0:08:48.91,0:08:52.77,Default,Keima,0000,0000,0000,,L-Làm ơn... để tôi save đã!
Dialogue: 0,0:08:53.19,0:08:55.32,Default,Elsie,0000,0000,0000,,Kami-niisama!
Dialogue: 0,0:08:56.36,0:09:00.42,Default,Elsie,0000,0000,0000,,Sao anh không nói với em là cô ấy cũng học lớp mình?
