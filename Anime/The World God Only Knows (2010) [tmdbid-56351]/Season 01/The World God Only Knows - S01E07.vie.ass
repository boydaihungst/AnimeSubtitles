Dialogue: 0,0:16:16.76,0:16:28.09,Default,,0000,0000,0000,,Kanon! Kanon!
Dialogue: 0,0:16:28.09,0:16:29.63,Default,,0000,0000,0000,,Kanon!
Dialogue: 0,0:16:44.86,0:16:51.44,Ins1R,,0000,0000,0000,,nanimo mienai kurayami no naka de
Dialogue: 0,0:16:44.86,0:16:51.44,Ins1E,,0000,0000,0000,,Em lạc lối trong bóng đêm không tìm được lối đi,{Em lạc lõng trong bóng đêm không tìm được lối đi,}
Dialogue: 0,0:16:51.44,0:16:58.37,Ins1R,,0000,0000,0000,,mitsuketanda chiisana hikari wo
Dialogue: 0,0:16:51.44,0:16:58.37,Ins1E,,0000,0000,0000,,cho tới khi bắt gặp đốm sáng đó.
Dialogue: 0,0:16:58.37,0:17:04.04,Ins1R,,0000,0000,0000,,watashi wa aruiteku
Dialogue: 0,0:16:58.37,0:17:04.04,Ins1E,,0000,0000,0000,,Giờ em tiến bước
Dialogue: 0,0:17:04.04,0:17:07.71,Ins1R,,0000,0000,0000,,mou mayowanai
Dialogue: 0,0:17:04.04,0:17:07.71,Ins1E,,0000,0000,0000,,Không còn e sợ nữa.
Dialogue: 0,0:17:07.71,0:17:13.84,Ins1R,,0000,0000,0000,,massugu ni todoke
Dialogue: 0,0:17:07.71,0:17:13.84,Ins1E,,0000,0000,0000,,Có thể vì nó hướng đến nơi anh.
Dialogue: 0,0:17:18.49,0:17:25.05,Ins1R,,0000,0000,0000,,nanimo kikoenai kensou no naka de
Dialogue: 0,0:17:18.49,0:17:25.05,Ins1E,,0000,0000,0000,,Em lạc trong hỗn loạn không nghe thấy được gì,
Dialogue: 0,0:17:25.05,0:17:31.86,Ins1R,,0000,0000,0000,,mitsuketanda chiisana koe wo
Dialogue: 0,0:17:25.05,0:17:31.86,Ins1E,,0000,0000,0000,,cho tới khi bắt gặp giọng nói đó.
Dialogue: 0,0:17:31.86,0:17:40.11,Ins1R,,0000,0000,0000,,watashi wa utau melodii ga
Dialogue: 0,0:17:31.86,0:17:40.11,Ins1E,,0000,0000,0000,,Giờ em ngân nga một giai điệu
Dialogue: 0,0:17:40.11,0:17:49.21,Ins1R,,0000,0000,0000,,sora e ippai ni hirogare
Dialogue: 0,0:17:40.11,0:17:49.21,Ins1E,,0000,0000,0000,,vang vọng lên tận trời cao.
Dialogue: 0,0:17:49.71,0:17:57.23,Ins1R,,0000,0000,0000,,kokoro wa anata ni tsudzuiteru
Dialogue: 0,0:17:49.71,0:17:57.23,Ins1E,,0000,0000,0000,,Con tim em đang hướng về anh.
Dialogue: 0,0:17:57.26,0:18:05.47,Ins1R,,0000,0000,0000,,ima sugu aitai kanjitai nukumori wo
Dialogue: 0,0:17:57.26,0:18:05.47,Ins1E,,0000,0000,0000,,Em muốn gặp anh ngay bây giờ, cảm nhận hơi ấm của anh{dấu cuối câu}
Dialogue: 0,0:18:05.47,0:18:14.31,Ins1R,,0000,0000,0000,,sekai ga mitasareru hikari de
Dialogue: 0,0:18:05.47,0:18:14.31,Ins1E,,0000,0000,0000,,khi đó thế giới sẽ tràn ngập ánh sáng.
Dialogue: 0,0:18:15.03,0:18:18.10,Ins1R,,0000,0000,0000,,doko ni ite mo
Dialogue: 0,0:18:15.03,0:18:18.10,Ins1E,,0000,0000,0000,,Dù anh có ở nơi đâu,
Dialogue: 0,0:18:18.10,0:18:24.95,Ins1R,,0000,0000,0000,,kanjiru yo koe wo
Dialogue: 0,0:18:18.10,0:18:24.95,Ins1E,,0000,0000,0000,,Em sẽ vẫn luôn nghe thấy giọng nói của anh,
Dialogue: 0,0:18:24.95,0:18:28.91,Ins1R,,0000,0000,0000,,watashi no rabu kooru
Dialogue: 0,0:18:24.95,0:18:28.91,Ins1E,,0000,0000,0000,,Đó chính là tình yêu.
Dialogue: 0,0:18:31.90,0:18:33.21,Ins1R,,0000,0000,0000,,{\fad(0,1000)}anata ni...
Dialogue: 0,0:18:31.90,0:18:33.21,Ins1E,,0000,0000,0000,,{\fad(0,1000)}dành cho anh...
Dialogue: 0,0:18:34.78,0:18:36.71,Default,,0000,0000,0000,,Kanon!
Dialogue: 0,0:18:56.34,0:18:57.82,Default,,0000,0000,0000,,Hội trường Naru giờ là của tôi!
Dialogue: 0,0:18:57.82,0:19:00.07,Default,,0000,0000,0000,,Lên nào!
Dialogue: 0,0:19:13.08,0:19:16.09,Ins2R,,0000,0000,0000,,kokuban socchi noke de
Dialogue: 0,0:19:13.08,0:19:16.09,Ins2E,,0000,0000,0000,,Không hề chú ý lên bảng,
Dialogue: 0,0:19:16.09,0:19:20.09,Ins2R,,0000,0000,0000,,CHIRARI mitsumeru saki wa
Dialogue: 0,0:19:16.09,0:19:20.09,Ins2E,,0000,0000,0000,,Em lén lút liếc nhìn
Dialogue: 0,0:19:20.09,0:19:23.72,Ins2R,,0000,0000,0000,,amai yokogao FANTAJII
Dialogue: 0,0:19:20.09,0:19:23.72,Ins2E,,0000,0000,0000,,khuôn mặt ngọt ngào trong giấc mơ của mình.
Dialogue: 0,0:19:25.10,0:19:28.28,Ins2R,,0000,0000,0000,,totsuzen kousha no ura
Dialogue: 0,0:19:25.10,0:19:28.28,Ins2E,,0000,0000,0000,,Rồi bất ngờ, chúng ta gặp nhau phía sau trường
Dialogue: 0,0:19:28.28,0:19:31.94,Ins2R,,0000,0000,0000,,soudan ren ai MOODO
Dialogue: 0,0:19:28.28,0:19:31.94,Ins2E,,0000,0000,0000,,cùng nói chuyện về tình yêu.
Dialogue: 0,0:19:31.94,0:19:35.43,Ins2R,,0000,0000,0000,,yayappa watashi ni janai
Dialogue: 0,0:19:31.94,0:19:35.43,Ins2E,,0000,0000,0000,,Nhưng nó không phải vì em.
Dialogue: 0,0:19:35.44,0:19:37.32,Default,,0000,0000,0000,,Kanon!
Dialogue: 0,0:19:37.32,0:19:42.14,Ins2R,,0000,0000,0000,,dakedo anata no tame ni ganbaru
Dialogue: 0,0:19:37.32,0:19:42.14,Ins2E,,0000,0000,0000,,Nhưng em vẫn muốn làm hết mình vì anh
Dialogue: 0,0:19:42.14,0:19:47.56,Ins2R,,0000,0000,0000,,itsu no hi ni ka furi mukasete miseru wa
Dialogue: 0,0:19:42.14,0:19:47.56,Ins2E,,0000,0000,0000,,để rồi một ngày anh sẽ để ý đến em.
Dialogue: 0,0:19:48.62,0:19:51.29,Ins2R,,0000,0000,0000,,donkan sugi na ROMIO-san
Dialogue: 0,0:19:48.62,0:19:51.29,Ins2E,,0000,0000,0000,,Chàng Romeo khờ khạo ơi.
Dialogue: 0,0:19:51.95,0:19:54.94,Ins2R,,0000,0000,0000,,HAPI HAPI HAPII KURESENTO
Dialogue: 0,0:19:51.95,0:19:54.94,Ins2E,,0000,0000,0000,,Hạnh phúc, hạnh phúc, hạnh phúc đang đến.
Dialogue: 0,0:19:54.94,0:19:57.71,Ins2R,,0000,0000,0000,,anata ni HAPPII PUREZENTO
Dialogue: 0,0:19:54.94,0:19:57.71,Ins2E,,0000,0000,0000,,Một món quà hạnh phúc dành cho anh.
Dialogue: 0,0:19:57.71,0:20:00.29,Ins2R,,0000,0000,0000,,wakatte hoshii no kono kimochi
Dialogue: 0,0:19:57.71,0:20:00.29,Ins2E,,0000,0000,0000,,Em muốn anh hiểu cảm giác của em.
Dialogue: 0,0:20:00.30,0:20:03.59,Ins2R,,0000,0000,0000,,anata dake yo eien ROMANSU
Dialogue: 0,0:20:00.30,0:20:03.59,Ins2E,,0000,0000,0000,,Mối tình vĩnh cửu dành riêng cho anh.
Dialogue: 0,0:20:03.59,0:20:06.60,Ins2R,,0000,0000,0000,,HAPI HAPI HAPII KURESENTO
Dialogue: 0,0:20:03.59,0:20:06.60,Ins2E,,0000,0000,0000,,Hạnh phúc, hạnh phúc, hạnh phúc đang đến.
Dialogue: 0,0:20:06.60,0:20:09.08,Ins2R,,0000,0000,0000,,anata ni zenbu sasageru
Dialogue: 0,0:20:06.60,0:20:09.08,Ins2E,,0000,0000,0000,,Em sẽ dành tất cả cho anh.
Dialogue: 0,0:20:09.08,0:20:10.47,Ins2R,,0000,0000,0000,,I LOVE YOU
Dialogue: 0,0:20:09.08,0:20:10.47,Ins2E,,0000,0000,0000,,Vì em yêu anh.
Dialogue: 0,0:20:10.47,0:20:12.10,Ins2R,,0000,0000,0000,,itsuka owaru no
Dialogue: 0,0:20:10.47,0:20:12.10,Ins2E,,0000,0000,0000,,Khi chuyện này kết thúc.
Dialogue: 0,0:20:12.10,0:20:16.00,Ins2R,,0000,0000,0000,,nee dakishimete hoshii
