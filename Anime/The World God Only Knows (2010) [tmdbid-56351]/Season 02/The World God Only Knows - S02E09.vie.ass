Dialogue: 0,0:00:20.37,0:00:21.75,Sign9A,Caption,0000,0000,0000,,Sách: Những điều cơ bản cho Giáo viên trung học thực tập\N Tái bản lần thứ 2
Dialogue: 0,0:02:12.19,0:02:13.40,Default,A,0000,0000,0000,,Này.
Dialogue: 0,0:02:13.40,0:02:14.48,Default,B,0000,0000,0000,,Hể.
Dialogue: 0,0:02:14.48,0:02:17.03,Default,C,0000,0000,0000,,Thứ Hai chán thật đấy.
Dialogue: 0,0:02:19.57,0:02:22.53,Default,Jun,0000,0000,0000,,Chào buổi sáng các học sinh thân yêu!
Dialogue: 0,0:02:35.63,0:02:39.09,Default,Jun,0000,0000,0000,,{\i1}Mình đã đợi ngày này lâu lắm rồi.
Dialogue: 0,0:02:39.51,0:02:42.18,Default,Jun,0000,0000,0000,,{\i1}Con đường thân thuộc tới học viện này
Dialogue: 0,0:02:42.18,0:02:43.68,Default,Jun,0000,0000,0000,,{\i1}hôm nay sao thật khác lạ.
Dialogue: 0,0:02:43.68,0:02:45.43,Default,,0000,0000,0000,,{\i1}Vì giờ đây thân phận mình đã thay đổi rồi.
Dialogue: 0,0:02:50.69,0:02:51.94,Default,Jun,0000,0000,0000,,Này, mấy cậu kia.
Dialogue: 0,0:02:52.52,0:02:53.31,Default,Ryo,0000,0000,0000,,Hở?
Dialogue: 0,0:02:53.31,0:02:56.48,Default,Jun,0000,0000,0000,,Học sinh trung học rồi thì phải biết cư xử cho có ý thức chứ!
Dialogue: 0,0:02:58.61,0:02:59.49,Default,Ryo,0000,0000,0000,,Xì.
Dialogue: 0,0:03:11.21,0:03:13.46,Default,Jun,0000,0000,0000,,{\i1}Nagase Jun, 21 tuổi!
Dialogue: 0,0:03:13.46,0:03:14.96,Default,Jun,0000,0000,0000,,{\i1}Từ hôm nay, mình sẽ trở thành giáo viên!
Dialogue: 0,0:03:15.04,0:03:17.67,Default,Nikaido,0000,0000,0000,,Này, giáo viên thực tập.
Dialogue: 0,0:03:18.38,0:03:20.05,Default,Jun,0000,0000,0000,,Chị Nikaido!
Dialogue: 0,0:03:20.72,0:03:22.55,Default,Jun,0000,0000,0000,,Lâu lắm rồi mới gặp chị!
Dialogue: 0,0:03:24.22,0:03:27.01,Default,Nikaido,0000,0000,0000,,Em chẳng thay đổi tí gì cả.
Dialogue: 0,0:03:27.85,0:03:31.73,Default,Principal,0000,0000,0000,,Như thông lệ, năm nay cũng sẽ có vài học sinh đã tốt nghiệp
Dialogue: 0,0:03:31.52,0:03:34.06,Sign9A,Caption,0000,0000,0000,,{\fs20\fax0.7\c&H4F4F42&\3c&H89897C&\bord1\frz327.856\move(241,26,384,135,0,2447)}Phòng giáo vụ
Dialogue: 0,0:03:31.73,0:03:34.06,Default,,0000,0000,0000,,trở về trường làm giáo viên thực tập.
Dialogue: 0,0:03:34.06,0:03:36.32,Default,Principal,0000,0000,0000,,Họ sẽ ở đây trong vòng 2 tuần,
Dialogue: 0,0:03:36.32,0:03:38.98,Default,,0000,0000,0000,,nên tôi mong mọi người sẽ cùng chia sẻ kinh nghiệm.
Dialogue: 0,0:03:38.98,0:03:41.99,Default,Principal,0000,0000,0000,,Giờ xin mời các em giới thiệu bản thân.
Dialogue: 0,0:03:43.20,0:03:46.66,Default,Jun,0000,0000,0000,,Em là Nagase Jun, năm cuối Đại học Sư phạm Narusawa!
Dialogue: 0,0:03:46.66,0:03:49.95,Default,Jun,0000,0000,0000,,Rất mong được mọi người chỉ dạy ạ.
Dialogue: 0,0:03:49.95,0:03:52.96,Default,Gym,0000,0000,0000,,Ồ, tốt lắm!
Dialogue: 0,0:03:52.96,0:03:55.17,Default,A,0000,0000,0000,,Vậy ra cô gái trẻ dễ mến này
Dialogue: 0,0:03:55.17,0:03:57.17,Default,,0000,0000,0000,,từng là học sinh trường ta sao?
Dialogue: 0,0:03:57.34,0:04:00.42,Default,Jun,0000,0000,0000,,Thần tượng của em là Jumbo Tsuruma ạ!
Dialogue: 0,0:04:00.42,0:04:01.88,Default,Gym,0000,0000,0000,,Tsuruma?
Dialogue: 0,0:04:01.88,0:04:03.43,Default,B,0000,0000,0000,,Đô vật chuyên nghiệp hả?
Dialogue: 0,0:04:03.84,0:04:05.89,Default,A,0000,0000,0000,,Lâu lắm không nghe thấy cái tên ấy rồi.
Dialogue: 0,0:04:05.89,0:04:07.93,Default,C,0000,0000,0000,,Cô ấy bao nhiêu tuổi rồi vậy?
Dialogue: 0,0:04:11.48,0:04:13.89,Default,Nikaido,0000,0000,0000,,Em vẫn hâm mộ đô vật chuyên nghiệp hả?
Dialogue: 0,0:04:13.89,0:04:14.90,Default,Jun,0000,0000,0000,,Vâng!
Dialogue: 0,0:04:14.90,0:04:16.31,Default,Nikaido,0000,0000,0000,,Cả cái ông đó nữa.
Dialogue: 0,0:04:16.31,0:04:17.19,Default,Jun,0000,0000,0000,,Vâng!
Dialogue: 0,0:04:17.19,0:04:19.90,Default,Jun,0000,0000,0000,,Vật chuyên nghiệp là môn thể thao của hi vọng, của giấc mơ
Dialogue: 0,0:04:19.90,0:04:23.32,Default,,0000,0000,0000,,và hơn cả chính là nơi luôn có sức mạnh niềm tin dẫn lối!
Dialogue: 0,0:04:23.32,0:04:25.70,Default,Jun,0000,0000,0000,,Chị có thấy dạy học cũng giống thế không?
Dialogue: 0,0:04:28.16,0:04:32.79,Default,Jun,0000,0000,0000,,Em mong sao mình sẽ trở thành một giáo viên\Nluôn mang trong mình nhiềm tin mãnh liệt!
Dialogue: 0,0:04:32.79,0:04:36.46,Default,Nikaido,0000,0000,0000,,Em phát âm "Ô" giống Tsuruma quá nhỉ, thích ông ta thế cơ à?
Dialogue: 0,0:04:36.75,0:04:37.75,Default,Jun,0000,0000,0000,,Ể?
Dialogue: 0,0:04:38.54,0:04:40.84,Default,Jun,0000,0000,0000,,Giống gì mà giống kia chứ.
Dialogue: 0,0:04:40.84,0:04:41.96,Default,Jun,0000,0000,0000,,Thôi mà...
Dialogue: 0,0:04:44.13,0:04:45.13,Default,Nikaido,0000,0000,0000,,Nhưng mà này,
Dialogue: 0,0:04:45.13,0:04:47.72,Default,Nikaido,0000,0000,0000,,Tôi mừng vì em trông em lạc quan hơn tôi đã nghĩ đó.
Dialogue: 0,0:04:47.72,0:04:49.93,Default,Jun,0000,0000,0000,,Ý chị là gì thế ạ?
Dialogue: 0,0:04:49.93,0:04:53.23,Default,Jun,0000,0000,0000,,Em lúc nào cũng lạc quan hết mình mà!
Dialogue: 0,0:04:55.98,0:05:02.15,Chalkboard,Caption,0000,0000,0000,,{\pos(320,201)}Nagase\NJun
Dialogue: 0,0:04:54.85,0:04:55.94,Default,Nikaido,0000,0000,0000,,Tôi xin giới thiệu.
Dialogue: 0,0:04:56.23,0:04:57.48,Default,,0000,0000,0000,,Chúng ta có một giáo viên thực tập mới về
Dialogue: 0,0:04:57.48,0:04:59.56,Default,,0000,0000,0000,,cô ấy từng là đàn em lớp dưới của tôi.
Dialogue: 0,0:04:59.56,0:05:02.11,Default,Nikaido,0000,0000,0000,,Từ giờ cô ấy sẽ đảm nhiệm vị trí phó chủ nhiệm một thời gian.
Dialogue: 0,0:05:02.44,0:05:04.28,Default,A,0000,0000,0000,,Cô ấy hòa đồng với lớp thì tốt quá ha?
Dialogue: 0,0:05:04.28,0:05:05.49,Default,B,0000,0000,0000,,Dễ thương ghê nhỉ?
Dialogue: 0,0:05:08.82,0:05:12.20,Default,Jun,0000,0000,0000,,{\i1}Các em ấy trông ai cũng sáng lạn quá
Dialogue: 0,0:05:22.50,0:05:24.72,Default,Nikaido,0000,0000,0000,,Nào. Giới thiệu bản thân đi.
Dialogue: 0,0:05:24.72,0:05:27.38,Default,Jun,0000,0000,0000,,C-Cô là Nagase Jun.
Dialogue: 0,0:05:27.38,0:05:30.35,Default,Jun,0000,0000,0000,,Rất vui được làm quen với các em!
Dialogue: 0,0:05:33.18,0:05:36.02,Default,Jun,0000,0000,0000,,Thần tượng của cô là Jumbo Tsuruma!
Dialogue: 0,0:05:38.77,0:05:39.77,Default,All,0000,0000,0000,,Ai thế?
Dialogue: 0,0:05:39.77,0:05:40.81,Default,All,0000,0000,0000,,Ai vậy?
Dialogue: 0,0:05:40.81,0:05:41.77,Default,All,0000,0000,0000,,Ai thế nhỉ?
Dialogue: 0,0:05:41.77,0:05:42.48,Default,Jun,0000,0000,0000,,Ê... Ơ?
Dialogue: 0,0:05:42.48,0:05:44.99,Default,Nikaido,0000,0000,0000,,Nào, bắt đầu vào học thôi.
Dialogue: 0,0:05:44.99,0:05:46.90,Default,Nikaido,0000,0000,0000,,Tôi sẽ dạy tiết một.
Dialogue: 0,0:05:46.90,0:05:48.41,Default,Nikaido,0000,0000,0000,,Em xuống cuối ngồi đi.
Dialogue: 0,0:05:48.41,0:05:50.28,Default,Jun,0000,0000,0000,,À, vâng.
Dialogue: 0,0:05:58.12,0:05:59.12,Default,Jun,0000,0000,0000,,Hể?
Dialogue: 0,0:06:00.25,0:06:01.92,Default,Nikaido,0000,0000,0000,,Sang trang 13 nào.
Dialogue: 0,0:06:00.83,0:06:05.09,Chalkboard,Caption,0000,0000,0000,,{\pos(375,250)}"Rồi\Nsau\Nđó"
Dialogue: 0,0:06:00.83,0:06:05.17,Chalkboard,Caption,0000,0000,0000,,{\pos(576,139)}Soseki\NNatsume
Dialogue: 0,0:06:01.92,0:06:05.17,Default,Nikaido,0000,0000,0000,,Hôm trước chúng ta dừng ở đâu rồi nhỉ?
Dialogue: 0,0:06:05.17,0:06:07.26,Default,Jun,0000,0000,0000,,Ê-Ể?
Dialogue: 0,0:06:09.18,0:06:11.35,Default,Nikaido,0000,0000,0000,,Nhân vật chính trong tác phẩm này
Dialogue: 0,0:06:11.35,0:06:13.10,Default,,0000,0000,0000,,là một quý tộc lười nhác
Dialogue: 0,0:06:13.10,0:06:16.31,Default,,0000,0000,0000,,sống ăn bám bố mẹ và anh trai.
Dialogue: 0,0:06:16.31,0:06:19.10,Signs,Nikaido,0000,0000,0000,,NEET: Not in Education, Employment, or Training = Vô công rồi nghề
Dialogue: 0,0:06:16.31,0:06:19.10,Default,Nikaido,0000,0000,0000,,Có thể nói đây là một NEET điển hình.
Dialogue: 0,0:06:20.31,0:06:24.36,Default,Jun,0000,0000,0000,,{\i1}S-Sao chẳng ai nói gì thế?
Dialogue: 0,0:06:25.03,0:06:28.03,Default,Jun,0000,0000,0000,,{\i1}Có một người đang chơi game giữa giờ cơ mà..
Dialogue: 0,0:06:29.32,0:06:33.08,Default,Jun,0000,0000,0000,,{\i1}Chẳng nhẽ em ấy là hồn ma chỉ mình mới nhìn thấy?
Dialogue: 0,0:06:38.71,0:06:41.12,Default,Jun,0000,0000,0000,,{\i1}Chắc không đời nào lại thế đâu...
Dialogue: 0,0:06:44.50,0:06:47.05,Default,Nikaido,0000,0000,0000,,À, đó là Katsuragi.
Dialogue: 0,0:06:47.05,0:06:49.38,Default,Jun,0000,0000,0000,,Katsuragi?
Dialogue: 0,0:06:49.67,0:06:51.43,Sign9A,Caption,0000,0000,0000,,Sách: Nhật Bản tổng quan - Cấp Trung học
Dialogue: 0,0:06:51.84,0:06:53.68,Default,Nikaido,0000,0000,0000,,Mà... kệ đi.
Dialogue: 0,0:06:54.26,0:06:55.81,Default,Nikaido,0000,0000,0000,,Cứ lờ nó đi.
Dialogue: 0,0:06:56.35,0:06:57.81,Default,Jun,0000,0000,0000,,Lờ em ấy đi sao?
Dialogue: 0,0:06:57.81,0:06:59.77,Default,Nikaido,0000,0000,0000,,Nó là thế đó.
Dialogue: 0,0:06:59.77,0:07:00.69,Default,Nikaido,0000,0000,0000,,Mặc kệ đi.
Dialogue: 0,0:07:00.69,0:07:02.40,Default,Jun,0000,0000,0000,,Không thể nào.
Dialogue: 0,0:07:02.40,0:07:06.69,Default,Jun,0000,0000,0000,,Chẳng nhẽ chúng ta không nên bảo em ấy dừng chơi game sao?
Dialogue: 0,0:07:07.98,0:07:10.15,Default,Jun,0000,0000,0000,,Chẳng lẽ em ấy là dạng...
Dialogue: 0,0:07:12.86,0:07:15.20,Default,Jun,0000,0000,0000,,...xử bất kì ai dám ý kiến với mình sao?!
Dialogue: 0,0:07:15.20,0:07:17.20,Default,Gym,0000,0000,0000,,Tôi cũng muốn lắm chứ.
Dialogue: 0,0:07:17.20,0:07:19.45,Default,Gym,0000,0000,0000,,Nói kiểu gì thì nó cũng chả chịu bỏ thứ đó ra đâu!
Dialogue: 0,0:07:20.46,0:07:22.33,Default,Gym,0000,0000,0000,,Nó vừa bơi vừa chơi game!
Dialogue: 0,0:07:22.33,0:07:24.00,Default,Gym,0000,0000,0000,,Đúng là quái vật thật đấy!
Dialogue: 0,0:07:24.96,0:07:26.55,Default,Gym,0000,0000,0000,,Đủ lắm rồi!
Dialogue: 0,0:07:27.67,0:07:29.51,Default,Gym,0000,0000,0000,,Tôi bảo thôi đi cơ mà!
Dialogue: 0,0:07:34.34,0:07:37.01,Default,Jun,0000,0000,0000,,{\fad(1,894)}V-Vừa là xã hội đen vừa là ảo thuật gia sao...
Dialogue: 0,0:07:37.01,0:07:39.18,Default,Jun,0000,0000,0000,,N-Nhưng dù là thế
Dialogue: 0,0:07:39.18,0:07:41.89,Default,,0000,0000,0000,,cũng đâu có nghĩa là em ấy không thèm nghe giảng đâu?
Dialogue: 0,0:07:41.89,0:07:43.02,Default,Kodama,0000,0000,0000,,What?\N(Cái gì?)
Dialogue: 0,0:07:43.90,0:07:47.36,Default,Kodama,0000,0000,0000,,Tôi đã cảnh cáo nói rồi đấy!
Dialogue: 0,0:07:47.77,0:07:49.23,Default,Kodama,0000,0000,0000,,Em định tập trung vào lớp học kiểu gì
Dialogue: 0,0:07:49.23,0:07:51.24,Default,,0000,0000,0000,,khi cứ kè kè thứ đó bên mình hả?
Dialogue: 0,0:07:51.24,0:07:53.24,Default,Kodama,0000,0000,0000,,You understand?\N(Em có hiểu không đó?)
Dialogue: 0,0:07:53.24,0:07:55.49,Default,Keima,0000,0000,0000,,Thế tức là em được chơi game
Dialogue: 0,0:07:55.49,0:07:56.87,Default,,0000,0000,0000,,nếu em chứng minh mình vẫn học chứ gì ạ?
Dialogue: 0,0:07:56.87,0:07:58.99,Default,Kodama,0000,0000,0000,,Cái gì?
Dialogue: 0,0:07:58.99,0:08:01.00,Default,Kodama,0000,0000,0000,,Cậu định làm thế nào?
Dialogue: 0,0:08:01.00,0:08:03.00,Default,Kodama,0000,0000,0000,,Đứng đầu mọi kì kiểm tra chắc?
Dialogue: 0,0:08:05.08,0:08:06.38,Default,Keima,0000,0000,0000,,Ra là vậy ạ.
Dialogue: 0,0:08:07.46,0:08:09.88,Default,Kodama,0000,0000,0000,,Từ lúc đấy, bài kiểm tra nào nó cũng 100 điểm.
Dialogue: 0,0:08:09.88,0:08:12.17,Default,Kodama,0000,0000,0000,,Shit!
Dialogue: 0,0:08:12.17,0:08:13.88,Default,Kodama,0000,0000,0000,,Ngày nào đó tôi sẽ cho nó biết tay!
Dialogue: 0,0:08:14.59,0:08:18.39,Default,Jun,0000,0000,0000,,{\i1}Vấn đề của trẻ em ngày nay phức tạp ghê...
Dialogue: 0,0:08:18.39,0:08:21.85,Default,Nikaido,0000,0000,0000,,Nó còn nói tiết học của tôi chán nữa chứ.
Dialogue: 0,0:08:21.85,0:08:24.27,Default,Nikaido,0000,0000,0000,,Chả biết phải thế nào nữa.
Dialogue: 0,0:08:28.15,0:08:30.65,Default,Guy,0000,0000,0000,,Trà!
Dialogue: 0,0:08:31.03,0:08:33.65,Default,Jun,0000,0000,0000,,Chị ấy không quan tâm nữa vì nản quá rồi...
Dialogue: 0,0:08:33.65,0:08:37.62,Default,Jun,0000,0000,0000,,Nhưng không phải như thế thì nghĩa là\Ngiáo viên thua học sinh sao?
Dialogue: 0,0:08:40.66,0:08:43.25,Default,Jun,0000,0000,0000,,Mình có nên nói gì không nhỉ?
Dialogue: 0,0:08:47.25,0:08:51.17,Default,Jun,0000,0000,0000,,Nhưng mình cũng chỉ là giáo viên thực tập thôi.
Dialogue: 0,0:09:05.64,0:09:06.77,Default,Jun,0000,0000,0000,,Không được!
Dialogue: 0,0:09:06.77,0:09:08.52,Default,Jun,0000,0000,0000,,Chả liên quan gì hết!
Dialogue: 0,0:09:09.19,0:09:12.07,Default,Jun,0000,0000,0000,,Mình sẽ dạy em ấy theo cách riêng của mình!
Dialogue: 0,0:09:15.82,0:09:18.62,Default,Jun,0000,0000,0000,,{\i1}Mình làm được... Mình làm được...
Dialogue: 0,0:09:18.62,0:09:20.08,Default,Jun,0000,0000,0000,,{\i1}Mình làm được mà!
Dialogue: 0,0:09:21.66,0:09:23.87,Default,A,0000,0000,0000,,Không phải giáo viên thực tập của lớp B kia sao?
Dialogue: 0,0:09:23.87,0:09:24.83,Default,B,0000,0000,0000,,Xinh ghê.
Dialogue: 0,0:09:34.05,0:09:35.88,Default,Jun,0000,0000,0000,,K-Katsuragi...
Dialogue: 0,0:09:50.06,0:09:52.23,Default,Jun,0000,0000,0000,,K-Katsuragi?
Dialogue: 0,0:09:52.23,0:09:53.02,Default,Keima,0000,0000,0000,,Hửm?
Dialogue: 0,0:09:54.03,0:09:56.11,Default,Jun,0000,0000,0000,,Chơi game cũng không sai gì cả,
Dialogue: 0,0:09:56.11,0:09:59.20,Default,Jun,0000,0000,0000,,nhưng sao em không dành nhiều thời gian cho bạn bè hơn đi.
Dialogue: 0,0:10:08.00,0:10:08.92,Default,Keima,0000,0000,0000,,Bạn bè?
Dialogue: 0,0:10:21.43,0:10:23.10,Default,Elsie,0000,0000,0000,,Sao thế ạ?
Dialogue: 0,0:10:23.89,0:10:24.72,Default,Elsie,0000,0000,0000,,Hử?
Dialogue: 0,0:10:25.89,0:10:27.56,Default,Keima,0000,0000,0000,,Ai mà biết.
Dialogue: 0,0:10:31.35,0:10:34.11,Default,Jun,0000,0000,0000,,Đ-Đáng sợ quá...
Dialogue: 0,0:10:34.98,0:10:36.57,Default,Jun,0000,0000,0000,,Ánh mắt em ấy...
Dialogue: 0,0:10:37.28,0:10:41.20,Default,Jun,0000,0000,0000,,Đôi mắt ấy sao trông như đã hoàn toàn rũ bỏ thực tại...
Dialogue: 0,0:10:41.20,0:10:43.58,Default,Jun,0000,0000,0000,,Dường như em ấy nhìn mình từ thế giới khác vậy.
Dialogue: 0,0:10:44.41,0:10:48.33,Default,Jun,0000,0000,0000,,Liệu có phải vì thế mà các giáo viên khác đã bỏ cuộc chăng?
Dialogue: 0,0:10:49.62,0:10:51.63,Default,Jun,0000,0000,0000,,Đây không còn là vấn đề bình thường của một đứa trẻ nữa rồi.
Dialogue: 0,0:10:53.50,0:10:56.71,Default,Jun,0000,0000,0000,,Em ấy trông thật cô đơn...
Dialogue: 0,0:10:56.71,0:10:57.84,Default,Jun,0000,0000,0000,,Đúng!
Dialogue: 0,0:10:57.84,0:11:00.43,Default,Jun,0000,0000,0000,,Em ấy đang cô đơn! Thật sự cô đơn!
Dialogue: 0,0:11:00.43,0:11:03.22,Default,Jun,0000,0000,0000,,Không phải em ấy chơi game vì em ấy muốn!
Dialogue: 0,0:11:04.10,0:11:06.68,Default,Jun,0000,0000,0000,,Mình phải cứu em ấy!
Dialogue: 0,0:11:08.27,0:11:09.73,Default,Jun,0000,0000,0000,,Như Jumbo đã nói!
Dialogue: 0,0:11:11.44,0:11:12.81,Default,Jun,0000,0000,0000,,Cuộc sống...
Dialogue: 0,0:11:12.81,0:11:15.69,Default,Jumbo,0000,0000,0000,,Cuộc sống chính là thử thách!
Dialogue: 0,0:11:16.11,0:11:18.65,Default,Jun,0000,0000,0000,,Mình sẽ đưa cậu bé đó trở lại làm người có ích!
Dialogue: 0,0:11:18.65,0:11:22.70,Default,Jun,0000,0000,0000,,Đây chính là nhiện vụ đầu tiên trong nghề giáo của mình!
Dialogue: 0,0:11:23.57,0:11:24.57,Default,Jun,0000,0000,0000,,Phải.
Dialogue: 0,0:11:24.57,0:11:26.70,Default,Jun,0000,0000,0000,,Mình sẽ luôn kiên định!
Dialogue: 0,0:11:27.12,0:11:29.04,Default,Jun,0000,0000,0000,,Từ lúc này...
Dialogue: 0,0:11:44.68,0:11:45.51,Default,Jun,0000,0000,0000,,Hể?
Dialogue: 0,0:11:50.35,0:11:52.85,Default,Jun,0000,0000,0000,,Hở? Vừa rồi là gì thế nhỉ...
Dialogue: 0,0:11:53.81,0:11:55.98,Default,Jun,0000,0000,0000,,A! Tiết sáu rồi!
Dialogue: 0,0:11:57.07,0:12:00.49,Default,Jun,0000,0000,0000,,Nhanh lên! Nhanh lên nào!
Dialogue: 0,0:12:00.53,0:12:04.95,Title,EpTitle,0000,0000,0000,,{\fad(609,1)\be15\pos(184,261)}Lớp 2-B     Cô Nagase
Dialogue: 0,0:12:06.32,0:12:08.54,Default,A,0000,0000,0000,,Ya, chúng ta may thiệt đấy.
Dialogue: 0,0:12:08.87,0:12:11.41,Default,B,0000,0000,0000,,Lớp bên cạnh là thầy đấy.
Dialogue: 0,0:12:11.41,0:12:15.04,Default,C,0000,0000,0000,,Thật may quá mình đã học lớp này!
Dialogue: 0,0:12:16.63,0:12:19.30,Default,A,0000,0000,0000,,Cô giáo thực tập dễ mến ghê!
Dialogue: 0,0:12:19.30,0:12:21.63,Default,C,0000,0000,0000,,Mùi hương của cô cũng hấp dẫn nữa!
Dialogue: 0,0:12:21.63,0:12:23.30,Default,C,0000,0000,0000,,Và cùng lắm cô ấy cũng chỉ là chị gái thôi ha?
Dialogue: 0,0:12:23.30,0:12:25.01,Default,B,0000,0000,0000,,Chúng ta làm được mà!
Dialogue: 0,0:12:25.01,0:12:27.35,Default,B,0000,0000,0000,,Trong 2 tuần tiếp cận cô ấy nào!
Dialogue: 0,0:12:27.89,0:12:29.14,Default,Chihiro,0000,0000,0000,,Lú ngốc.
Dialogue: 0,0:12:29.14,0:12:32.85,Default,Chihiro,0000,0000,0000,,Cô ấy không có hứng với đám thảm hại các cậu đâu.
Dialogue: 0,0:12:32.85,0:12:34.31,Default,Chihiro,0000,0000,0000,,Coi gương đi đã nhé.
Dialogue: 0,0:12:34.31,0:12:35.35,Default,All,0000,0000,0000,,Im đi!
Dialogue: 0,0:12:38.02,0:12:39.86,Default,Elsie,0000,0000,0000,,Mọi người ai cũng hứng thú ghê!
Dialogue: 0,0:12:40.69,0:12:44.86,Default,Elsie,0000,0000,0000,,Giáo viên thực tập đúng là người cảm hứng nha.
Dialogue: 0,0:12:44.86,0:12:46.07,Default,Keima,0000,0000,0000,,Hừ.
Dialogue: 0,0:12:46.07,0:12:49.87,Default,Keima,0000,0000,0000,,Có gì đặc biệt với mấy cái thông số yếu xìu thế?
Dialogue: 0,0:12:50.49,0:12:56.21,Chalkboard,Caption,0000,0000,0000,,{\an8\bord1.5\&HF0F7F0&\3c&H4A6B30&\fs30}Bảng thoại: Tôi đang làm việc. Em đừng làm phiền được không?
Dialogue: 0,0:12:50.66,0:12:54.00,Default,Keima,0000,0000,0000,,Giáo viên là loại nhân vật tẻ nhạt nhất,
Dialogue: 0,0:12:54.00,0:12:56.21,Default,,0000,0000,0000,,đã vậy thành quả đạt được lại chả bõ công.
Dialogue: 0,0:12:56.96,0:13:01.09,Default,Keima,0000,0000,0000,,Cái gì mà giáo viên còn đang thực tập mới hấp dẫn chứ hả?
Dialogue: 0,0:13:01.09,0:13:02.46,Default,Keima,0000,0000,0000,,Mọi người hiểu sai hết rồi.
Dialogue: 0,0:13:02.46,0:13:05.22,Default,Keima,0000,0000,0000,,Chỉ khi người chơi đóng vai giáo viên thực tập
Dialogue: 0,0:13:05.22,0:13:07.97,Default,,0000,0000,0000,,thì lúc đó mới hấp dẫn, hiểu không Elsea yêu quý.
Dialogue: 0,0:13:11.01,0:13:12.31,Default,Elsie,0000,0000,0000,,Chuông reo rồi!
Dialogue: 0,0:13:12.31,0:13:13.56,Default,Elsie,0000,0000,0000,,Vào lớp thôi!
Dialogue: 0,0:13:13.56,0:13:15.10,Default,Elsie,0000,0000,0000,,Học nào!
Dialogue: 0,0:13:19.73,0:13:21.57,Default,Jun,0000,0000,0000,,{\i1}Ngày thực tập thứ hai của mình...
Dialogue: 0,0:13:21.57,0:13:23.61,Default,Jun,0000,0000,0000,,{\i1}Phải bắt đầu công việc thôi!
Dialogue: 0,0:13:27.11,0:13:28.62,Default,Jun,0000,0000,0000,,{\i1}Katsuragi...
Dialogue: 0,0:13:28.62,0:13:31.62,Default,Jun,0000,0000,0000,,{\i1}Mình phải giúp em ấy.
Dialogue: 0,0:13:35.12,0:13:36.71,Default,Kodama,0000,0000,0000,,Nhanh lên!
Dialogue: 0,0:13:36.71,0:13:39.25,Default,Jun,0000,0000,0000,,V-Vâng!
Dialogue: 0,0:13:40.17,0:13:45.01,Default,Kodama,0000,0000,0000,,Bài đầu tiên của tiếng Anh. Say "Good day" nào.
Dialogue: 0,0:13:46.09,0:13:47.59,Default,Kodama,0000,0000,0000,,Good day!
Dialogue: 0,0:13:47.59,0:13:50.89,Default,All,0000,0000,0000,,Good day, Mr. Kodama.
Dialogue: 0,0:13:51.30,0:13:54.47,Default,Jun,0000,0000,0000,,C-Chào buổi sáng các em.
Dialogue: 0,0:13:54.47,0:13:56.64,Default,Jun,0000,0000,0000,,Cùng cố gắng học nhé.
Dialogue: 0,0:13:56.64,0:14:01.40,Default,All,0000,0000,0000,,Chào buổi sáng, Nagase-sensei!
Dialogue: 0,0:14:03.15,0:14:04.28,Default,Kodama,0000,0000,0000,,All right.\N (Được rồi.)
Dialogue: 0,0:14:04.28,0:14:06.15,Default,Kodama,0000,0000,0000,,Bắt đầu thôi.
Dialogue: 0,0:14:06.86,0:14:10.20,Default,Jun,0000,0000,0000,,{\i1}S-Sensei sao?!
Dialogue: 0,0:14:12.45,0:14:15.91,Default,Jun,0000,0000,0000,,{\i1}Không thể phụ lòng các em ấy được.
Dialogue: 0,0:14:16.37,0:14:19.92,Default,Jun,0000,0000,0000,,{\i1}Mình nhất định phải trở thành một giáo viên tốt!
Dialogue: 0,0:14:31.05,0:14:32.80,Default,Kodama,0000,0000,0000,,Này!
Dialogue: 0,0:14:33.22,0:14:36.39,Default,Kodama,0000,0000,0000,,Chuông của ai kêu đó hả?
Dialogue: 0,0:14:36.39,0:14:39.19,Default,Kodama,0000,0000,0000,,Không được dùng di động nghe chưa!
Dialogue: 0,0:14:39.19,0:14:41.06,Default,Elsie,0000,0000,0000,,E-Em xin lỗi!
Dialogue: 0,0:14:41.06,0:14:43.82,Default,Kodama,0000,0000,0000,,Dùng tiếng Anh đi!
Dialogue: 0,0:14:43.82,0:14:45.61,Default,Kodama,0000,0000,0000,,Say "Sorry"!\N (Nói "Xin lỗi" đi!)
Dialogue: 0,0:14:45.61,0:14:47.44,Default,Elsie,0000,0000,0000,,S-Sorry!
Dialogue: 0,0:14:47.53,0:14:50.28,Sign9A,Caption,0000,0000,0000,,Sách: Những điều cơ bản cho Giáo viên trung học thực tập\N Tái bản lần thứ 2
Dialogue: 0,0:14:47.90,0:14:50.20,Default,Kodama,0000,0000,0000,,Say "Accessory"!\N(Nói "phụ kiện" đ!.)
Dialogue: 0,0:14:50.66,0:14:52.41,Default,Elsie,0000,0000,0000,,Accessory!
Dialogue: 0,0:14:52.41,0:14:54.70,Default,Kodama,0000,0000,0000,,Say "sorcery"!\N(Nói "Ma thuật" đi!)
Dialogue: 0,0:14:54.70,0:14:57.08,Default,Elsie,0000,0000,0000,,Sorcery!
Dialogue: 0,0:15:01.67,0:15:04.38,Default,Elsie,0000,0000,0000,,Vừa rồi tệ thật đấy.
Dialogue: 0,0:15:04.38,0:15:06.88,Default,Keima,0000,0000,0000,,Thế... cô tìm được thông tin chưa?
Dialogue: 0,0:15:06.88,0:15:08.55,Default,Elsie,0000,0000,0000,,À, vâng.
Dialogue: 0,0:15:10.72,0:15:13.55,Default,Elsie,0000,0000,0000,,Nagase Jun, 21 tuổi.
Dialogue: 0,0:15:13.55,0:15:16.06,Default,Elsie,0000,0000,0000,,Sinh viên năm cuối Đại học Sư phạm Narusawa.
Dialogue: 0,0:15:16.06,0:15:18.81,Default,Elsie,0000,0000,0000,,Hâm mộ vật chuyên nghiệp, bóng rổ,
Dialogue: 0,0:15:18.81,0:15:20.98,Default,,0000,0000,0000,,và một số môn thể thao khác.
Dialogue: 0,0:15:21.69,0:15:23.23,Default,Elsie,0000,0000,0000,,Chỉ thế thôi ạ.
Dialogue: 0,0:15:24.73,0:15:26.40,Default,Keima,0000,0000,0000,,Tôi cữ nghĩ mình sẽ được nghỉ ngơi một thời gian,
Dialogue: 0,0:15:26.40,0:15:29.11,Default,,0000,0000,0000,,từ lúc chúng ta không dính vào con ác linh nào nữa...
Dialogue: 0,0:15:29.11,0:15:31.86,Default,Elsie,0000,0000,0000,,Ngày hôm qua máy dò không phản ứng...
Dialogue: 0,0:15:32.49,0:15:36.62,Default,Elsie,0000,0000,0000,,Có lẽ nó chỉ vừa mới nhập vào cô ấy thôi.
Dialogue: 0,0:15:41.37,0:15:44.54,Default,Elsie,0000,0000,0000,,Ác linh này vẫn còn rất yếu!
Dialogue: 0,0:15:44.54,0:15:47.05,Default,Elsie,0000,0000,0000,,Chúng ta bắt nó luôn đi, Kami-sama!
Dialogue: 0,0:15:47.34,0:15:49.01,Default,Keima,0000,0000,0000,,Không, tôi về đây.
Dialogue: 0,0:15:49.01,0:15:51.05,Default,Elsie,0000,0000,0000,,Hể?
Dialogue: 0,0:15:52.80,0:15:55.14,Default,Elsie,0000,0000,0000,,Sao anh lại về thế?
Dialogue: 0,0:15:55.85,0:15:58.14,Default,Elsie,0000,0000,0000,,Kami-sama xấu tính quá đi!
Dialogue: 0,0:15:58.14,0:16:01.02,Default,Elsie,0000,0000,0000,,Anh lúc nào cũng làm ngược lại em nói thôi!
Dialogue: 0,0:16:01.68,0:16:02.98,Default,Keima,0000,0000,0000,,Bình tĩnh đi.
Dialogue: 0,0:16:02.98,0:16:06.02,Default,Keima,0000,0000,0000,,Tiếp cận cô ta bây giờ nguy hiểm lắm.
Dialogue: 0,0:16:06.40,0:16:07.57,Default,Elsie,0000,0000,0000,,Hở?
Dialogue: 0,0:16:08.07,0:16:09.48,Default,Elsie,0000,0000,0000,,Sao thế ạ?
Dialogue: 0,0:16:11.69,0:16:13.78,Default,Keima,0000,0000,0000,,Để tôi dạy cô vài điều bổ ích.
Dialogue: 0,0:16:14.32,0:16:15.66,Default,Keima,0000,0000,0000,,Sẽ có những lúc
Dialogue: 0,0:16:15.66,0:16:18.99,Default,,0000,0000,0000,,tình yêu với giáo viên là vô vọng!
Dialogue: 0,0:16:20.66,0:16:23.41,Default,Keima,0000,0000,0000,,Theo lý thuyết của Gal-game,
Dialogue: 0,0:16:23.41,0:16:26.63,Default,,0000,0000,0000,,giáo viên là những người tốn thời gian chinh phục nhất.
Dialogue: 0,0:16:26.63,0:16:28.04,Default,Keima,0000,0000,0000,,Cô biết tại sao không?
Dialogue: 0,0:16:28.04,0:16:30.55,Default,Elsie,0000,0000,0000,,Hơ? Tại sao ạ?
Dialogue: 0,0:16:31.09,0:16:35.30,Default,Keima,0000,0000,0000,,Bởi vì công việc của họ là làm bạn với học sinh.
Dialogue: 0,0:16:36.72,0:16:39.14,Default,Keima,0000,0000,0000,,Thiết lập quan hệ thân thiện với giáo viên\Nthì hết sức dễ dàng.
Dialogue: 0,0:16:39.14,0:16:42.48,Default,Keima,0000,0000,0000,,Nhưng tiến xa hơn mức đó thì lại khó vô cùng.
Dialogue: 0,0:16:42.98,0:16:45.27,Default,Keima,0000,0000,0000,,Đầu tiên cô phải tạo mối quan hệ ngang hàng đã.
Dialogue: 0,0:16:46.40,0:16:49.02,Default,Keima,0000,0000,0000,,Và khi mối quan hệ đã ở mức bạn bè,
Dialogue: 0,0:16:49.02,0:16:51.65,Default,Keima,0000,0000,0000,,cô sẽ cần tốn cả đống sức lực để thay đổi nó.
Dialogue: 0,0:16:52.11,0:16:54.32,Default,Keima,0000,0000,0000,,Đó là tại sao chinh phục giáo viên
Dialogue: 0,0:16:54.32,0:16:56.95,Default,,0000,0000,0000,,lại tốn nhiều thời gian và Event.
Dialogue: 0,0:16:58.49,0:17:02.41,Default,Keima,0000,0000,0000,,Hiện giờ, tôi cần chắc chắn mình đang ngang hàng với cô ta.
Dialogue: 0,0:17:02.41,0:17:04.79,Default,Keima,0000,0000,0000,,Nếu cô ta coi tôi là học sinh của mình,
Dialogue: 0,0:17:04.79,0:17:06.33,Default,Keima,0000,0000,0000,,cuộc chinh phục này sẽ tốn nhiều thời gian lắm!!
Dialogue: 0,0:17:06.92,0:17:11.38,Default,Keima,0000,0000,0000,,Vì thế, tôi phải tránh chạm mặt cô ta ở trường.
Dialogue: 0,0:17:11.38,0:17:13.84,Default,Elsie,0000,0000,0000,,T-Thế em biết làm gì bây giờ?
Dialogue: 0,0:17:14.38,0:17:17.47,Default,Keima,0000,0000,0000,,Dùng dải lủa của cô tạo thế thân đi học hộ cho tôi đi.
Dialogue: 0,0:17:17.51,0:17:19.55,Default,Keima,0000,0000,0000,,Còn tôi sẽ dùng thời gian tới để lập kế hoạch.
Dialogue: 0,0:17:19.55,0:17:20.35,Default,Elsie,0000,0000,0000,,Vâng!
Dialogue: 0,0:17:24.98,0:17:27.73,Default,Jun,0000,0000,0000,,Em định đi đâu thế, Katsuragi?
Dialogue: 0,0:17:31.73,0:17:34.61,Default,Jun,0000,0000,0000,,Đã tan học đâu.
Dialogue: 0,0:17:35.36,0:17:36.57,Default,Keima,0000,0000,0000,,{\i1}Đợi đã.
Dialogue: 0,0:17:36.57,0:17:38.36,Default,Keima,0000,0000,0000,,{\i1}Sao cô ta lại ra tay trước thế này?
Dialogue: 0,0:17:39.03,0:17:41.41,Default,Jun,0000,0000,0000,,{\i1}Em ấy định cúp tiết.
Dialogue: 0,0:17:41.41,0:17:44.20,Default,Jun,0000,0000,0000,,{\i1}Chắc em ấy chán trường học lắm rồi.
Dialogue: 0,0:17:50.38,0:17:51.63,Default,Jun,0000,0000,0000,,Katsuragi.
Dialogue: 0,0:17:52.75,0:17:54.51,Default,Jun,0000,0000,0000,,Ta-da!
Dialogue: 0,0:17:55.42,0:17:58.51,Default,Jun,0000,0000,0000,,Em muốn ăn trưa với cô không?
Dialogue: 0,0:17:59.05,0:18:01.51,Default,Keima,0000,0000,0000,,K-Không, không cần đâu ạ.
Dialogue: 0,0:18:02.81,0:18:04.22,Default,Keima,0000,0000,0000,,{\i1}Cô ta đang làm gì vậy?
Dialogue: 0,0:18:04.22,0:18:05.73,Default,Keima,0000,0000,0000,,{\i1}Mình không thể để Event xảy ra tại trường được!
Dialogue: 0,0:18:05.73,0:18:07.31,Default,Keima,0000,0000,0000,,{\i1}Dừng lại đi!
Dialogue: 0,0:18:08.14,0:18:09.06,Default,Jun,0000,0000,0000,,Sao thế?
Dialogue: 0,0:18:12.52,0:18:14.32,Default,Jun,0000,0000,0000,,Nè, Katsuragi.
Dialogue: 0,0:18:14.32,0:18:16.82,Default,Jun,0000,0000,0000,,Ăn trưa cùng cô đi.
Dialogue: 0,0:18:20.78,0:18:22.33,Default,Jun,0000,0000,0000,,Ô, chờ đã!
Dialogue: 0,0:18:24.79,0:18:26.20,Default,Jun,0000,0000,0000,,{\i1}Cô sẽ không để em trốn đâu!{\i0}
Dialogue: 0,0:18:26.20,0:18:28.83,Default,Jun,0000,0000,0000,,{\i1}Cô sẽ dạy cho em trường học thú vị thế nào!{\i0}
Dialogue: 0,0:18:40.84,0:18:42.35,Default,Jun,0000,0000,0000,,X-Xin lỗi nhé.
Dialogue: 0,0:18:43.76,0:18:45.22,Default,Jun,0000,0000,0000,,Em ổn chứ?
Dialogue: 0,0:18:45.64,0:18:47.98,Default,Keima,0000,0000,0000,,V-Vâng...
Dialogue: 0,0:18:49.60,0:18:52.48,Default,Keima,0000,0000,0000,,Em nghĩ mình bị cảm,
Dialogue: 0,0:18:52.48,0:18:54.11,Default,Keima,0000,0000,0000,,nên em muốn về sớm...
Dialogue: 0,0:18:55.15,0:18:56.11,Default,Jun,0000,0000,0000,,Cảm?
Dialogue: 0,0:18:59.61,0:19:02.74,Default,Jun,0000,0000,0000,,Nhưng trông em có giống bị cảm đâu.
Dialogue: 0,0:19:06.33,0:19:07.75,Default,Jun,0000,0000,0000,,Ổn rồi mà.
Dialogue: 0,0:19:07.75,0:19:09.25,Default,Jun,0000,0000,0000,,Em không bị sốt đâu.
Dialogue: 0,0:19:11.21,0:19:14.42,Default,Jun,0000,0000,0000,,Nào, cố gắng thêm chút nữa đi!
Dialogue: 0,0:19:15.75,0:19:17.88,Default,Keima,0000,0000,0000,,{\i1}Đ-Đừng có chạm vào tôi!
Dialogue: 0,0:19:20.09,0:19:23.89,Default,Jun,0000,0000,0000,,Bánh Sandwich Soba trứng ở đây vẫn ngon ghê!
Dialogue: 0,0:19:24.35,0:19:29.39,Default,Jun,0000,0000,0000,,Trước đây cô đã từng phải hỗn chiến vì mấy cái bánh này đấy!
Dialogue: 0,0:19:30.02,0:19:33.98,Default,Jun,0000,0000,0000,,Nhưng giờ được mua từ sau tiệm luôn!
Dialogue: 0,0:19:33.98,0:19:35.86,Default,Jun,0000,0000,0000,,Giáo viên đúng là lợi thế ha!
Dialogue: 0,0:19:37.48,0:19:40.07,Default,Keima,0000,0000,0000,,{\i1}Sao cô ta cứ nhắm vào mình thế?
Dialogue: 0,0:19:40.07,0:19:42.91,Default,Keima,0000,0000,0000,,{\i1}Mình đã làm gì sai sao?
Dialogue: 0,0:19:43.66,0:19:45.45,Default,Keima,0000,0000,0000,,{\i1}Bằng mọi giá không được nói chuyện với cô ta.
Dialogue: 0,0:19:45.45,0:19:46.78,Default,Keima,0000,0000,0000,,{\i1}Không nhìn về phía cô ta.
Dialogue: 0,0:19:46.78,0:19:48.87,Default,Keima,0000,0000,0000,,{\i1}Mình không nên chia sẽ cái gì với cô ta hết!
Dialogue: 0,0:19:52.42,0:19:54.21,Default,Jun,0000,0000,0000,,{\i1}Mình cũng không thể trách em ấy được.
Dialogue: 0,0:19:54.21,0:19:56.71,Default,Jun,0000,0000,0000,,{\i1}Đột nhiên bắt chuyện thì cũng khó mà...
Dialogue: 0,0:19:58.75,0:19:59.71,Default,Jun,0000,0000,0000,,Đúng rồi!
Dialogue: 0,0:19:59.71,0:20:01.47,Default,Jun,0000,0000,0000,,Cô cho em xem cái này nè!
Dialogue: 0,0:20:04.26,0:20:06.14,Default,Jun,0000,0000,0000,,Nè, nhìn đi!
Dialogue: 0,0:20:07.05,0:20:09.18,Default,Jun,0000,0000,0000,,Jumbo Tsuruma đó!
Dialogue: 0,0:20:09.68,0:20:11.68,Default,Jun,0000,0000,0000,,Tay vật chuyên nghiệp vĩ đại nhất lịch sử!
Dialogue: 0,0:20:12.06,0:20:16.19,Default,Jun,0000,0000,0000,,Nếu còn sống đến giờ chắc ông ấy vẫn thống trị môn này đó.
Dialogue: 0,0:20:17.48,0:20:21.07,Default,Jun,0000,0000,0000,,Cô thích vật chuyên nghiệp lắm!
Dialogue: 0,0:20:21.90,0:20:25.20,Default,Jun,0000,0000,0000,,Dù những môn võ thuật phối hợp giờ ngày càng phổ biến...
Dialogue: 0,0:20:25.95,0:20:29.49,Default,Jun,0000,0000,0000,,Nhưng võ thuật là sức mạnh cơ bắp bên ngoài.
Dialogue: 0,0:20:29.49,0:20:33.33,Default,Jun,0000,0000,0000,,Còn vật chuyên nghiệp lại thể hiện sức mạnh của niềm tin!
Dialogue: 0,0:20:33.33,0:20:34.96,Default,Jun,0000,0000,0000,,Ngầu thật đấy!
Dialogue: 0,0:20:35.46,0:20:37.71,Default,Keima,0000,0000,0000,,Vậy là cô nghĩ niềm tin sẽ vượt qua thực tại sao.
Dialogue: 0,0:20:37.71,0:20:41.21,Default,Jun,0000,0000,0000,,Ha! Katsuragi đã trả lời rồi!
Dialogue: 0,0:20:41.71,0:20:43.80,Default,Jun,0000,0000,0000,,Tsuruma lại thắng rồi!
Dialogue: 0,0:20:47.05,0:20:48.47,Default,Keima,0000,0000,0000,,{\i1}Tệ rồi...
Dialogue: 0,0:20:48.47,0:20:50.18,Default,Keima,0000,0000,0000,,{\i1}Mình đã tiếp lời.
Dialogue: 0,0:20:57.31,0:20:58.77,Default,Jun,0000,0000,0000,,Katsuragi!
Dialogue: 0,0:21:02.28,0:21:04.74,Default,Jun,0000,0000,0000,,Em có thể tâm sự với cô bất cứ khi nào em muốn.
Dialogue: 0,0:21:04.74,0:21:07.49,Default,Jun,0000,0000,0000,,Cô luôn sẵn lòng giúp em.
Dialogue: 0,0:21:12.20,0:21:13.70,Default,Elsie,0000,0000,0000,,Hể?
Dialogue: 0,0:21:13.70,0:21:17.33,Default,Elsie,0000,0000,0000,,Anh đã bắt chuyện với cô Nagase rồi sao?
Dialogue: 0,0:21:17.33,0:21:20.71,Default,Elsie,0000,0000,0000,,Ai cũng kết bạn được, Kami-sama giỏi thật đấy.
Dialogue: 0,0:21:20.71,0:21:22.59,Default,Keima,0000,0000,0000,,Không đơn giản như thế đâu!
Dialogue: 0,0:21:24.01,0:21:25.30,Default,Keima,0000,0000,0000,,Tại sao chứ?
Dialogue: 0,0:21:25.30,0:21:28.09,Default,Keima,0000,0000,0000,,Tại sao cô ta lại tiếp cận mình?
Dialogue: 0,0:21:28.34,0:21:30.47,Default,Elsie,0000,0000,0000,,Chắc là cô lo cho anh thôi.
Dialogue: 0,0:21:30.47,0:21:32.60,Default,Elsie,0000,0000,0000,,Vì anh là đứa trẻ có vấn đề mà.
Dialogue: 0,0:21:33.14,0:21:34.10,Default,Keima,0000,0000,0000,,Hử?
Dialogue: 0,0:21:35.18,0:21:37.98,Default,Keima,0000,0000,0000,,Tôi có vấn đề chỗ nào chứ?
Dialogue: 0,0:21:39.36,0:21:40.98,Default,Elsie,0000,0000,0000,,Anh không biết thật sao?
Dialogue: 0,0:21:42.57,0:21:47.49,Default,Keima,0000,0000,0000,,Giờ mình đã bị coi là học sinh rồi.
Dialogue: 0,0:21:47.91,0:21:50.99,Default,Keima,0000,0000,0000,,Tức là mình đã bước vào Route giáo viên rồi.
Dialogue: 0,0:21:51.49,0:21:53.70,Default,Keima,0000,0000,0000,,Điều mà mình không muốn nhất...
Dialogue: 0,0:21:53.70,0:21:55.08,Default,Keima,0000,0000,0000,,Tình hình này...
Dialogue: 0,0:21:56.29,0:21:58.75,Default,Keima,0000,0000,0000,,Sẽ mãi mãi không thấy được Ending mất thôi.
Dialogue: 0,0:23:29.97,0:23:44.90,Default,EpTitle,0000,0000,0000,,{\i1\3c&H40FEF8&\c&H59D1F5&\shad0\be5\fs60\bord1.5\pos(113,142)}School Wars
Dialogue: 0,0:23:30.38,0:23:32.51,Chat nham,Keima,0000,0000,0000,,Giáng sinh, Valentine, sinh nhật và nghỉ hè...
Dialogue: 0,0:23:32.51,0:23:34.30,Chat nham,Keima,0000,0000,0000,,Game ngày càng được thiết kế thuận tiện,
Dialogue: 0,0:23:34.30,0:23:35.60,Chat nham,,0000,0000,0000,,nên bạn có thể đi hết từ Event này sang Event khác.
Dialogue: 0,0:23:35.60,0:23:36.97,Chat nham,Keima,0000,0000,0000,,Nhưng thế giới thực,
Dialogue: 0,0:23:36.97,0:23:39.68,Chat nham,Keima,0000,0000,0000,,phải mất đến 365 ngày mới hết một năm!
Dialogue: 0,0:23:39.68,0:23:41.10,Chat nham,Keima,0000,0000,0000,,Bạn có thấy "loãng" quá không?
Dialogue: 0,0:23:41.10,0:23:42.48,Chat nham,Keima,0000,0000,0000,,Thế giới thực cần nhiều động lực hơn nữa!
Dialogue: 0,0:23:42.48,0:23:44.52,Chat nham,Elsie,0000,0000,0000,,Hãy cố hết mình nhé!
