Dialogue: 0,0:00:06.42,0:00:07.55,Default,,0,0,0,,{\i1}Núi,{\i0}
Dialogue: 0,0:00:07.63,0:00:09.09,Default,,0,0,0,,{\i1}đồng hoang,{\i0}
Dialogue: 0,0:00:09.17,0:00:10.17,Default,,0,0,0,,{\i1}tường thành.{\i0}
Dialogue: 0,0:00:11.13,0:00:14.22,Default,,0,0,0,,{\i1}Một mình Fushi liên tục chiến đấu\Nvới Người Gõ Cửa.{\i0}
Dialogue: 0,0:00:15.60,0:00:19.77,Default,,0,0,0,,{\i1}Tuy nhiên sự mệt mỏi đã đạt đến cực điểm.{\i0}
Dialogue: 0,0:00:22.10,0:00:24.44,Default,,0,0,0,,Ba người họ đã chết rồi.
Dialogue: 0,0:00:25.65,0:00:28.40,Default,,0,0,0,,Xin lỗi, đều tại tôi không đủ năng lực.
Dialogue: 0,0:00:28.48,0:00:30.45,Default,,0,0,0,,Nhưng mà chiến tranh vẫn chưa kết thúc.
Dialogue: 0,0:00:31.03,0:00:32.49,Default,,0,0,0,,Tôi biết rồi.
Dialogue: 0,0:00:32.57,0:00:34.95,Default,,0,0,0,,Tôi phải tiêu diệt tất cả Người Gõ Cửa.
Dialogue: 0,0:02:25.02,0:02:26.94,Default,,0,0,0,,Đạn pháo đã nạp đầy rồi.
Dialogue: 0,0:02:33.48,0:02:35.57,Default,,0,0,0,,Máy bắn đá cũng bắt đầu hoạt động rồi.
Dialogue: 0,0:02:36.36,0:02:37.45,Default,,0,0,0,,Bắn!
Dialogue: 0,0:02:50.67,0:02:52.67,Default,,0,0,0,,Tôi biết rồi, là anh Fushi.
Dialogue: 0,0:02:52.75,0:02:54.55,Default,,0,0,0,,Anh Fushi đã trở lại rồi!
Dialogue: 0,0:02:55.34,0:02:56.63,Default,,0,0,0,,Tuyệt quá!
Dialogue: 0,0:02:57.84,0:02:59.84,Default,,0,0,0,,{\i1}Lúc này Fushi đã hiểu{\i0}
Dialogue: 0,0:02:59.93,0:03:02.68,Default,,0,0,0,,{\i1}kẻ địch lớn nhất của mình là gì.{\i0}
Dialogue: 0,0:03:03.64,0:03:05.06,Default,,0,0,0,,{\i1}Đó chính là "ngất đi".{\i0}
Dialogue: 0,0:03:08.35,0:03:11.69,Default,,0,0,0,,{\i1}Các triệu chứng xuất hiện là mờ mắt,{\i0}
Dialogue: 0,0:03:11.77,0:03:14.32,Default,,0,0,0,,{\i1}hoặc chảy máu.{\i0}
Dialogue: 0,0:03:15.36,0:03:18.11,Default,,0,0,0,,{\i1}Chỉ cần lập tức biến hình\Nlà có thể hồi phục.{\i0}
Dialogue: 0,0:03:19.57,0:03:20.82,Default,,0,0,0,,{\i1}Có điều…{\i0}
Dialogue: 0,0:03:20.91,0:03:24.16,Default,,0,0,0,,{\i1}nếu nhanh thì chỉ trong năm giây,\Ntriệu chứng tiếp theo lại xuất hiện,{\i0}
Dialogue: 0,0:03:26.37,0:03:27.91,Default,,0,0,0,,{\i1}buộc phải biến hóa liên tục.{\i0}
Dialogue: 0,0:03:28.41,0:03:30.79,Default,,0,0,0,,{\i1}Cố gắng lấy lại sức mạnh lúc còn sống{\i0}
Dialogue: 0,0:03:30.88,0:03:34.05,Default,,0,0,0,,{\i1}của những người bạn đã chết.{\i0}
Dialogue: 0,0:03:35.80,0:03:36.76,Default,,0,0,0,,{\i1}Kai.{\i0}
Dialogue: 0,0:03:37.51,0:03:38.67,Default,,0,0,0,,{\i1}Messar.{\i0}
Dialogue: 0,0:03:40.89,0:03:42.05,Default,,0,0,0,,{\i1}Hairo.{\i0}
Dialogue: 0,0:03:42.60,0:03:46.97,Default,,0,0,0,,{\i1}Fushi cố gắng thử một mình\Nthao túng sức mạnh của ba người này.{\i0}
Dialogue: 0,0:03:47.98,0:03:50.27,Default,,0,0,0,,Nỏ làm sao có thể bắn\Nliên tục như thế chứ…
Dialogue: 0,0:03:50.81,0:03:52.15,Default,,0,0,0,,Anh ấy làm cách nào vậy?
Dialogue: 0,0:03:59.61,0:04:02.07,Default,,0,0,0,,Tòa tháp thứ chín ở phía Tây cháy rồi!
Dialogue: 0,0:04:02.16,0:04:03.82,Default,,0,0,0,,Đừng để kho thuốc súng phát nổ.
Dialogue: 0,0:04:03.91,0:04:04.74,Default,,0,0,0,,Nhanh lên!
Dialogue: 0,0:04:04.83,0:04:05.70,Default,,0,0,0,,Mau dập lửa!
Dialogue: 0,0:04:05.79,0:04:08.04,Default,,0,0,0,,Không được, sắp đổ rồi.
Dialogue: 0,0:04:17.09,0:04:19.76,Default,,0,0,0,,{\i1}Fushi không hề nhận ra\Nthứ gì đã bị lấy đi,{\i0}
Dialogue: 0,0:04:22.13,0:04:24.55,Default,,0,0,0,,{\i1}nhưng lại có một cảm giác không ổn.{\i0}
Dialogue: 0,0:04:28.47,0:04:32.81,Default,,0,0,0,,{\i1}Thế là cậu ấy lập tức biến ra\Ncơ thể của Hairo để quan sát tình hình.{\i0}
Dialogue: 0,0:04:33.85,0:04:37.32,Default,,0,0,0,,{\i1}Cơ thể này ổn định hơn những cơ thể khác,{\i0}
Dialogue: 0,0:04:37.90,0:04:40.07,Default,,0,0,0,,{\i1}có thể ngăn cảm giác đau đớn,{\i0}
Dialogue: 0,0:04:40.15,0:04:43.03,Default,,0,0,0,,{\i1}duy trì được thời gian lâu nhất\Ntrước khi bị ngất đi.{\i0}
Dialogue: 0,0:04:43.11,0:04:47.24,Default,,0,0,0,,{\i1}Như vậy cậu ấy có thể tập trung đối phó\Nvới Người Gõ Cửa xuất hiện trước mắt.{\i0}
Dialogue: 0,0:04:47.83,0:04:49.79,Default,,0,0,0,,{\i1}Nhưng nó vẫn có nhược điểm.{\i0}
Dialogue: 0,0:04:50.29,0:04:52.33,Default,,0,0,0,,{\i1}Vì không cảm giác được sự đau đớn,{\i0}
Dialogue: 0,0:04:52.42,0:04:53.92,Default,,0,0,0,,{\i1}nên không biết cơ thể bị thương,{\i0}
Dialogue: 0,0:04:54.00,0:04:57.38,Default,,0,0,0,,{\i1}và cũng không biết\Nmọi người đang chịu khổ ở đâu.{\i0}
Dialogue: 0,0:04:58.84,0:05:00.80,Default,,0,0,0,,Lại là máy bắn đá của bọn chúng.
Dialogue: 0,0:05:00.88,0:05:02.59,Default,,0,0,0,,Đại pháo không bắn tới được.
Dialogue: 0,0:05:02.68,0:05:04.47,Default,,0,0,0,,{\i1}Mặc dù có thể liều mạng,{\i0}
Dialogue: 0,0:05:04.55,0:05:08.01,Default,,0,0,0,,{\i1}nhưng cơ thể này không phù hợp\Nbảo vệ bản thân và người khác,{\i0}
Dialogue: 0,0:05:08.72,0:05:11.77,Default,,0,0,0,,{\i1}đến một lúc nào đó thì buộc phải thay thế.{\i0}
Dialogue: 0,0:05:15.27,0:05:17.11,Default,,0,0,0,,{\i1}Bộ áo giáp nặng nề này{\i0}
Dialogue: 0,0:05:17.19,0:05:20.40,Default,,0,0,0,,{\i1}rất phù hợp\Nvới cơ thể cường tráng của Kai.{\i0}
Dialogue: 0,0:05:21.40,0:05:23.57,Default,,0,0,0,,{\i1}Vũ khí của Kai{\i0}
Dialogue: 0,0:05:23.65,0:05:27.33,Default,,0,0,0,,{\i1}có thể cắt đôi tim của Người Gõ Cửa{\i0}
Dialogue: 0,0:05:27.41,0:05:29.49,Default,,0,0,0,,{\i1}trong cơ thể khổng lồ.{\i0}
Dialogue: 0,0:05:45.59,0:05:48.60,Default,,0,0,0,,{\i1}Cơ thể của Messar chẳng có gì cả.{\i0}
Dialogue: 0,0:05:48.68,0:05:53.73,Default,,0,0,0,,{\i1}Trang phục nặng nề,\Nkhông giống như mặc để chiến đấu.{\i0}
Dialogue: 0,0:05:54.31,0:05:57.40,Default,,0,0,0,,{\i1}Không, nặng nề như vậy\Ncũng là có nguyên do.{\i0}
Dialogue: 0,0:05:58.65,0:06:01.73,Default,,0,0,0,,{\i1}Đó là một vũ khí hoàn toàn mới.{\i0}
Dialogue: 0,0:06:06.82,0:06:07.70,Default,,0,0,0,,{\i1}Đây là…{\i0}
Dialogue: 0,0:06:08.37,0:06:09.78,Default,,0,0,0,,{\i1}Anh Fushi cho chúng ta đấy.{\i0}
Dialogue: 0,0:06:10.74,0:06:14.04,Default,,0,0,0,,{\i1}Fushi dùng sức mạnh của mình,\Nliên tục nạp đạn vào vũ khí này.{\i0}
Dialogue: 0,0:06:14.12,0:06:17.12,Default,,0,0,0,,{\i1}Nó đã phát huy được tác dụng rất lớn.{\i0}
Dialogue: 0,0:06:18.50,0:06:22.80,Default,,0,0,0,,{\i1}Tuy nhiên, tình hình đã không hề thay đổi.{\i0}
Dialogue: 0,0:06:22.88,0:06:27.97,Default,,0,0,0,,{\i1}Người Gõ Cửa không biết vì sao\Nđến giờ vẫn chưa vượt qua tường thành{\i0}
Dialogue: 0,0:06:28.05,0:06:30.43,Default,,0,0,0,,{\i1}đột nhiên nhe móng vuốt.{\i0}
Dialogue: 0,0:06:32.22,0:06:37.44,Default,,0,0,0,,{\i1}Nó bay đến từ một nơi cách Fushi rất xa,{\i0}
Dialogue: 0,0:06:38.52,0:06:41.44,Default,,0,0,0,,{\i1}như thể đang cười nhạo cậu ấy.{\i0}
Dialogue: 0,0:06:48.11,0:06:51.62,Default,,0,0,0,,{\i1}Có nghĩa là Người Gõ Cửa\Nvẫn đang chiếm ưu thế.{\i0}
Dialogue: 0,0:06:52.37,0:06:55.37,Default,,0,0,0,,{\i1}Nó tự phá hủy máy bắn đá{\i0}
Dialogue: 0,0:06:55.45,0:06:56.62,Default,,0,0,0,,để tạo ra không gian
Dialogue: 0,0:06:56.71,0:06:59.75,Default,,0,0,0,,khiến cảm giác của Fushi\Ntrở nên kém nhạy bén.
Dialogue: 0,0:07:00.54,0:07:04.59,Default,,0,0,0,,{\i1}Fushi đã mất đi cơ thể cậu thiếu niên\Nvà một "quân cờ".{\i0}
Dialogue: 0,0:07:08.51,0:07:09.93,Default,,0,0,0,,{\i1}Nhưng…{\i0}
Dialogue: 0,0:07:18.56,0:07:20.90,Default,,0,0,0,,{\i1}quân cờ ấy đã sống lại.{\i0}
Dialogue: 0,0:07:43.34,0:07:44.80,Default,,0,0,0,,Sao có thể?
Dialogue: 0,0:07:45.42,0:07:48.55,Default,,0,0,0,,Chẳng phải ba người đã chết rồi sao?
Dialogue: 0,0:07:49.59,0:07:51.39,Default,,0,0,0,,Tôi vẫn chưa nói với cậu nhỉ.
Dialogue: 0,0:07:51.47,0:07:53.47,Default,,0,0,0,,Chúng tôi cũng là người bất tử.
Dialogue: 0,0:08:09.65,0:08:12.95,Default,,0,0,0,,Bây giờ không phải là lúc nằm mơ…
Dialogue: 0,0:08:13.78,0:08:15.91,Default,,0,0,0,,{\i1}Mình phải mau chóng tỉnh lại thôi.{\i0}
Dialogue: 0,0:08:16.49,0:08:18.00,Default,,0,0,0,,Đây không phải mơ đâu!
Dialogue: 0,0:08:18.08,0:08:19.25,Default,,0,0,0,,Nghe này Fushi.
Dialogue: 0,0:08:19.83,0:08:22.50,Default,,0,0,0,,Việc cậu cần làm bây giờ\Nlà cùng chúng tôi bay đến đó,
Dialogue: 0,0:08:22.58,0:08:25.04,Default,,0,0,0,,ngăn chặn đạn pháo của lũ chết tiệt kia.
Dialogue: 0,0:08:27.51,0:08:30.84,Default,,0,0,0,,Fushi, nếu cậu cảm nhận được\Nchúng tôi đã chết
Dialogue: 0,0:08:30.93,0:08:33.34,Default,,0,0,0,,thì hãy lập tức\Ntạo ra cơ thể chúng tôi và cắt dây.
Dialogue: 0,0:08:33.93,0:08:35.55,Default,,0,0,0,,Nếu vậy thì chúng tôi sẽ sống lại.
Dialogue: 0,0:08:37.97,0:08:40.10,Default,,0,0,0,,Nhưng cho dù tôi làm thế,
Dialogue: 0,0:08:40.18,0:08:42.02,Default,,0,0,0,,mọi người cũng không sống lại được mà.
Dialogue: 0,0:08:42.60,0:08:44.86,Default,,0,0,0,,Chỉ chúng tôi có thể sống lại được thôi.
Dialogue: 0,0:08:49.65,0:08:51.99,Default,,0,0,0,,Đến lúc phải quay về rồi.
Dialogue: 0,0:08:52.07,0:08:54.49,Default,,0,0,0,,Nếu đạn pháo bay về phía\Nkhu vực Eron và Fushura,
Dialogue: 0,0:08:54.57,0:08:56.37,Default,,0,0,0,,thì cậu hãy đưa chúng tôi tới đó.
Dialogue: 0,0:08:57.37,0:08:58.79,Default,,0,0,0,,Nếu không phiền thì
Dialogue: 0,0:08:58.87,0:09:01.87,Default,,0,0,0,,nhờ cậu dùng kiếm nước hỗ trợ tôi nhé.
Dialogue: 0,0:09:03.67,0:09:06.13,Default,,0,0,0,,Đợi đã, tôi đang rất bối rối.
Dialogue: 0,0:09:06.79,0:09:11.13,Default,,0,0,0,,Xin hãy coi chúng tôi là những "quân cờ"\Ncó thể hồi sinh vô hạn.
Dialogue: 0,0:09:11.72,0:09:14.59,Default,,0,0,0,,Dù anh muốn lợi dụng thế nào cũng được.
Dialogue: 0,0:09:15.18,0:09:18.10,Default,,0,0,0,,Chúng tôi đến đây là vì vậy mà.
Dialogue: 0,0:09:32.61,0:09:34.28,Default,,0,0,0,,Tốt quá rồi.
Dialogue: 0,0:09:43.04,0:09:44.92,Default,,0,0,0,,Làm ơn nhất định phải sống lại.
Dialogue: 0,0:09:45.42,0:09:47.75,Default,,0,0,0,,Nếu không thuận lợi thì tôi sẽ khổ sở lắm.
Dialogue: 0,0:10:07.02,0:10:09.32,Default,,0,0,0,,Trận chiến bây giờ chỉ mới bắt đầu thôi.
Dialogue: 0,0:10:10.73,0:10:12.94,Default,,0,0,0,,Đúng rồi, đạn pháo rơi trên đường.
Dialogue: 0,0:10:21.66,0:10:23.20,Default,,0,0,0,,Cẩn thận nhé.
Dialogue: 0,0:10:23.29,0:10:24.71,Default,,0,0,0,,Tôi biết rồi.
Dialogue: 0,0:10:49.19,0:10:50.40,Default,,0,0,0,,Chết rồi ư?
Dialogue: 0,0:10:50.48,0:10:52.23,Default,,0,0,0,,May nhờ có Ngài Hiền Triết giúp sức.
Dialogue: 0,0:10:53.65,0:10:56.03,Default,,0,0,0,,{\i1}May quá, đến kịp rồi.{\i0}
Dialogue: 0,0:10:58.24,0:11:00.03,Default,,0,0,0,,{\i1}Mình vẫn không dám tin.{\i0}
Dialogue: 0,0:11:00.62,0:11:02.28,Default,,0,0,0,,Họ chính là đồng đội mới của cậu.
Dialogue: 0,0:11:03.16,0:11:06.16,Default,,0,0,0,,{\i1}Đồng đội mình đã tìm bao nhiêu năm,{\i0}
Dialogue: 0,0:11:07.16,0:11:09.04,Default,,0,0,0,,{\i1}tìm kiếm khắp nơi bao nhiêu năm.{\i0}
Dialogue: 0,0:11:14.88,0:11:16.84,Default,,0,0,0,,{\i1}Những đồng đội không bao giờ chết.{\i0}
Dialogue: 0,0:11:17.47,0:11:21.30,Default,,0,0,0,,{\i1}Bây giờ mình đang có cảm giác gì vậy…{\i0}
Dialogue: 0,0:11:35.11,0:11:38.99,Default,,0,0,0,,Tất cả Người Gõ Cửa bắt đầu tập hợp rồi.
Dialogue: 0,0:11:40.45,0:11:42.32,Default,,0,0,0,,Chúng đang phô diễn sức mạnh thực sự.
Dialogue: 0,0:11:42.91,0:11:45.29,Default,,0,0,0,,Mọi thứ ngày càng trở nên thú vị rồi đây.
Dialogue: 0,0:11:56.51,0:11:57.67,Default,,0,0,0,,{\i1}Mình đã cảm nhận được,{\i0}
Dialogue: 0,0:11:58.92,0:12:00.63,Default,,0,0,0,,{\i1}cả ba người họ.{\i0}
Dialogue: 0,0:12:01.22,0:12:04.14,Default,,0,0,0,,{\i1}Fushi đã biết mình cần phải làm gì.{\i0}
Dialogue: 0,0:12:04.72,0:12:08.56,Default,,0,0,0,,{\i1}Đầu tiên cảm nhận hành động của họ\Nvà đứng sau hỗ trợ.{\i0}
Dialogue: 0,0:12:09.52,0:12:11.52,Default,,0,0,0,,{\i1}Một khi ba người họ chết{\i0}
Dialogue: 0,0:12:11.60,0:12:14.31,Default,,0,0,0,,{\i1}thì lập tức tạo ra cơ thể mới\Nở một nơi phù hợp.{\i0}
Dialogue: 0,0:12:15.44,0:12:18.69,Default,,0,0,0,,{\i1}Đưa Kai đến chỗ có máy bắn đá của địch{\i0}
Dialogue: 0,0:12:18.78,0:12:20.53,Default,,0,0,0,,{\i1}hoặc những nơi đang cháy.{\i0}
Dialogue: 0,0:12:21.74,0:12:25.12,Default,,0,0,0,,{\i1}Đưa Hairo đến nơi\Nđang có nhiều người đau khổ.{\i0}
Dialogue: 0,0:12:25.83,0:12:29.04,Default,,0,0,0,,{\i1}Messar thì được đưa đến\Nnơi đường phố đầy rẫy Người Gõ Cửa.{\i0}
Dialogue: 0,0:12:31.50,0:12:33.71,Default,,0,0,0,,{\i1}Người Gõ Cửa\Nđược bắn trên không rơi vào thành{\i0}
Dialogue: 0,0:12:33.79,0:12:35.38,Default,,0,0,0,,{\i1}là điểm yếu của Fushi.{\i0}
Dialogue: 0,0:12:37.38,0:12:40.38,Default,,0,0,0,,{\i1}Hầu hết đều có thể xử lý kịp thời,{\i0}
Dialogue: 0,0:12:40.47,0:12:41.63,Default,,0,0,0,,{\i1}nhưng…{\i0}
Dialogue: 0,0:12:54.48,0:12:58.07,Default,,0,0,0,,{\i1}Tất cả cửa sổ ở khu Rine\Nđều đã được niêm phong.{\i0}
Dialogue: 0,0:12:58.86,0:13:00.24,Default,,0,0,0,,Chạy đâu mất rồi?
Dialogue: 0,0:13:00.32,0:13:01.95,Default,,0,0,0,,Qua đó xem thử đi.
Dialogue: 0,0:13:09.04,0:13:11.96,Default,,0,0,0,,Hai người đang làm gì thế?\NMau vào trong nhà đi!
Dialogue: 0,0:13:12.04,0:13:14.42,Default,,0,0,0,,Chúng tôi đang tìm một bé gái.
Dialogue: 0,0:13:14.50,0:13:17.29,Default,,0,0,0,,Đừng lề mề nữa, mau đi đi!
Dialogue: 0,0:13:20.21,0:13:23.55,Default,,0,0,0,,{\i1}Ba con người bất tử trở thành tấm lá chắn,{\i0}
Dialogue: 0,0:13:24.13,0:13:26.60,Default,,0,0,0,,{\i1}thay thế những người sắp phải chết{\i0}
Dialogue: 0,0:13:26.68,0:13:29.22,Default,,0,0,0,,{\i1}mà hy sinh tính mạng của mình,{\i0}
Dialogue: 0,0:13:30.14,0:13:32.27,Default,,0,0,0,,{\i1}sau đó lại hồi sinh nhanh chóng.{\i0}
Dialogue: 0,0:13:33.69,0:13:35.65,Default,,0,0,0,,Như này thì phạm quy quá đấy.
Dialogue: 0,0:13:35.73,0:13:40.57,Default,,0,0,0,,{\i1}Những binh sĩ chứng kiến kỳ tích này\Nđều rất bối rối.{\i0}
Dialogue: 0,0:13:40.65,0:13:44.07,Default,,0,0,0,,Mau lên, tiêu diệt\Nlũ đạn pháo chết tiệt đó đi.
Dialogue: 0,0:13:44.15,0:13:47.49,Default,,0,0,0,,{\i1}Ba quân cờ có thể hồi sinh vô hạn{\i0}
Dialogue: 0,0:13:47.57,0:13:50.29,Default,,0,0,0,,{\i1}vô cùng lợi hại.{\i0}
Dialogue: 0,0:13:51.75,0:13:53.79,Default,,0,0,0,,{\i1}Trong lúc chiến đấu,{\i0}
Dialogue: 0,0:13:53.87,0:13:57.38,Default,,0,0,0,,{\i1}Fushi còn phải tăng cường phòng thủ,{\i0}
Dialogue: 0,0:13:57.46,0:14:00.34,Default,,0,0,0,,{\i1}dù là trên đường phố, hay ngoại thành.{\i0}
Dialogue: 0,0:14:07.30,0:14:11.27,Default,,0,0,0,,{\i1}Trước mắt chỉ kéo dài rễ\Nra ngoại thành Renril,{\i0}
Dialogue: 0,0:14:11.35,0:14:12.85,Default,,0,0,0,,{\i1}vẫn còn rất nhiều khoảng trống.{\i0}
Dialogue: 0,0:14:14.02,0:14:18.06,Default,,0,0,0,,{\i1}Fushi không ngừng\Nđặt những tấm sắt trong lòng đất,{\i0}
Dialogue: 0,0:14:18.15,0:14:21.57,Default,,0,0,0,,{\i1}và phải tăng cường triệt phá\Nnhững quả đạn pháo bay tới{\i0}
Dialogue: 0,0:14:22.57,0:14:25.90,Default,,0,0,0,,{\i1}và máy bắn đá nằm ngoài phạm vi của Fushi.{\i0}
Dialogue: 0,0:14:27.99,0:14:31.41,Default,,0,0,0,,{\i1}Rốt cuộc khi nào\Nmới tới được vị trí của kẻ địch đây?{\i0}
Dialogue: 0,0:14:36.83,0:14:39.67,Default,,0,0,0,,{\i1}Chỉ cần rễ của Fushi\Ncòn vươn xa về phía trước{\i0}
Dialogue: 0,0:14:39.75,0:14:42.80,Default,,0,0,0,,{\i1}thì có thể phá hủy chúng\Ntừ dưới lòng đất như trước đây.{\i0}
Dialogue: 0,0:14:42.88,0:14:47.13,Default,,0,0,0,,{\i1}Nhưng việc này cần có thời gian.{\i0}
Dialogue: 0,0:14:47.22,0:14:51.05,Default,,0,0,0,,{\i1}Bởi vì cậu ấy đồng thời\Ncòn phải bảo vệ Renril.{\i0}
Dialogue: 0,0:14:55.98,0:14:58.44,Default,,0,0,0,,{\i1}Đúng rồi, nếu dùng cách này…{\i0}
Dialogue: 0,0:15:25.30,0:15:26.26,Default,,0,0,0,,Chính là cái đó ư?
Dialogue: 0,0:15:34.31,0:15:36.68,Default,,0,0,0,,- Hairo, Messar, bắt đầu thôi.\N- Rõ!
Dialogue: 0,0:15:58.37,0:16:00.58,Default,,0,0,0,,Mọi người không sao chứ?
Dialogue: 0,0:16:01.29,0:16:02.25,Default,,0,0,0,,Không sao hết.
Dialogue: 0,0:16:02.33,0:16:03.75,Default,,0,0,0,,Tốt quá rồi.
Dialogue: 0,0:16:03.84,0:16:06.59,Default,,0,0,0,,Cảm giác ở đây không thể nào\Ntruyền đến căn cứ được,
Dialogue: 0,0:16:06.67,0:16:08.22,Default,,0,0,0,,nên tôi hơi lo lắng.
Dialogue: 0,0:16:08.30,0:16:10.38,Default,,0,0,0,,Chúng ta vẫn chưa thể lơ là.
Dialogue: 0,0:16:10.47,0:16:14.10,Default,,0,0,0,,Kẻ địch có lẽ\Nsẽ vẫn dùng cách cũ để tấn công.
Dialogue: 0,0:16:14.18,0:16:16.14,Default,,0,0,0,,Cũng phải, mau về thôi.
Dialogue: 0,0:16:16.22,0:16:17.72,Default,,0,0,0,,Về thế nào đây?
Dialogue: 0,0:16:17.81,0:16:20.81,Default,,0,0,0,,Chúng tôi phải mất một buổi tối\Nmới đi về Renril được.
Dialogue: 0,0:16:21.40,0:16:22.60,Default,,0,0,0,,Ừ nhỉ.
Dialogue: 0,0:16:22.69,0:16:25.52,Default,,0,0,0,,Mọi người vẫn chưa chết,\Nnên tôi không thể đưa về được.
Dialogue: 0,0:16:26.11,0:16:27.61,Default,,0,0,0,,Bên trong còn đạn không?
Dialogue: 0,0:16:27.69,0:16:28.57,Default,,0,0,0,,Còn.
Dialogue: 0,0:16:28.65,0:16:31.15,Default,,0,0,0,,Hãy đợi đã, để tôi về đem ngựa tới.
Dialogue: 0,0:16:32.45,0:16:35.16,Default,,0,0,0,,Cái tên này, nóng vội quá rồi đó.
Dialogue: 0,0:16:35.24,0:16:36.37,Default,,0,0,0,,Thì ra là vậy.
Dialogue: 0,0:16:36.45,0:16:37.79,Default,,0,0,0,,Chịu đựng một khắc là xong.
Dialogue: 0,0:16:38.70,0:16:40.83,Default,,0,0,0,,Cậu Fushi, còn lại nhờ cậu nhé.
Dialogue: 0,0:16:40.91,0:16:41.83,Default,,0,0,0,,Kai, khoan đã!
Dialogue: 0,0:16:41.92,0:16:43.67,Default,,0,0,0,,Giết tôi trước cái đã.
Dialogue: 0,0:16:44.25,0:16:45.59,Default,,0,0,0,,Ở đây, ngay đây này.
Dialogue: 0,0:16:45.67,0:16:47.13,Default,,0,0,0,,Nhờ anh bắn cho một phát nhé.
Dialogue: 0,0:17:03.69,0:17:06.23,Default,,0,0,0,,{\i1}Trận chiến đã bắt đầu được bốn ngày.{\i0}
Dialogue: 0,0:17:07.44,0:17:10.61,Default,,0,0,0,,{\i1}Chết đi, sau đó sống lại.{\i0}
Dialogue: 0,0:17:10.69,0:17:12.32,Default,,0,0,0,,{\i1}Cứ không ngừng lặp lại như thế.{\i0}
Dialogue: 0,0:17:12.40,0:17:14.87,Default,,0,0,0,,Hãy đưa tôi đến khu vực này.
Dialogue: 0,0:17:14.95,0:17:16.74,Default,,0,0,0,,Trông cậy cả vào cậu nhé.
Dialogue: 0,0:17:16.83,0:17:17.78,Default,,0,0,0,,Được rồi.
Dialogue: 0,0:17:20.75,0:17:24.46,Default,,0,0,0,,{\i1}Đôi lúc chết đi\Nchỉ để di chuyển quãng đường dài.{\i0}
Dialogue: 0,0:17:25.50,0:17:27.38,Default,,0,0,0,,Đúng là đáng sợ quá.
Dialogue: 0,0:17:27.46,0:17:29.55,Default,,0,0,0,,Hãy giúp tôi đốt thi thể này đi.
Dialogue: 0,0:17:30.26,0:17:32.63,Default,,0,0,0,,{\i1}Để ngăn Người Gõ Cửa sinh sôi{\i0}
Dialogue: 0,0:17:32.72,0:17:35.34,Default,,0,0,0,,{\i1}buộc phải xử lý thi thể càng sớm càng tốt.{\i0}
Dialogue: 0,0:17:35.43,0:17:39.39,Default,,0,0,0,,{\i1}Làm vậy cũng để không tạo ra rác,\Ncản trở cảm giác nhạy bén của Fushi.{\i0}
Dialogue: 0,0:17:39.97,0:17:44.19,Default,,0,0,0,,{\i1}Rác trên đường phố là vấn đề\Nquan trọng thứ hai, sau bảo vệ mạng người.{\i0}
Dialogue: 0,0:17:45.23,0:17:49.15,Default,,0,0,0,,{\i1}Các binh sĩ phụ trách vận chuyển rác\Ndo cư dân tạo ra mỗi ngày.{\i0}
Dialogue: 0,0:17:50.15,0:17:53.95,Default,,0,0,0,,Đã một ngày trôi qua\Nkể từ khi khu vực này được cảnh báo.
Dialogue: 0,0:17:54.03,0:17:56.53,Default,,0,0,0,,Vẫn chưa rõ cần phải tốn ba ngày
Dialogue: 0,0:17:56.62,0:17:58.53,Default,,0,0,0,,hay một tháng nữa đường phố mới an toàn.
Dialogue: 0,0:18:00.12,0:18:03.12,Default,,0,0,0,,Liệu tất cả dân chúng có thể chịu đựng\Nviệc chỉ ở trong nhà không?
Dialogue: 0,0:18:03.21,0:18:07.13,Default,,0,0,0,,Ngài Hiền Triết cung cấp ba bữa mỗi ngày,
Dialogue: 0,0:18:07.21,0:18:09.84,Default,,0,0,0,,ít nhất cũng không cần lo\Nmọi người chết đói.
Dialogue: 0,0:18:10.55,0:18:12.96,Default,,0,0,0,,Công chúa, xin người hãy tới đây.
Dialogue: 0,0:18:18.30,0:18:20.81,Default,,0,0,0,,{\i1}Ba lần? Có người đang gọi mình.{\i0}
Dialogue: 0,0:18:25.73,0:18:26.77,Default,,0,0,0,,Kahaku?
Dialogue: 0,0:18:28.15,0:18:29.31,Default,,0,0,0,,Sao vậy?
Dialogue: 0,0:18:29.40,0:18:31.90,Default,,0,0,0,,Hành vi của anh ta rất quái lạ,
Dialogue: 0,0:18:33.78,0:18:35.36,Default,,0,0,0,,nên chúng tôi đã bắt lại.
Dialogue: 0,0:18:35.95,0:18:38.82,Default,,0,0,0,,Khi chúng tôi rút lui khỏi\Ntòa tháp thứ chín ở phía Tây,
Dialogue: 0,0:18:38.91,0:18:41.20,Default,,0,0,0,,thì tên này… cánh tay trái…
Dialogue: 0,0:18:41.28,0:18:43.41,Default,,0,0,0,,của Kahaku lại nói rằng
Dialogue: 0,0:18:43.50,0:18:48.13,Default,,0,0,0,,Người Gõ Cửa sẽ tập trung hỏa lực ở đó,\Nnên tốt nhất đừng đi.
Dialogue: 0,0:18:48.88,0:18:53.17,Default,,0,0,0,,Vậy nên chúng tôi mới ở nguyên đó\Nvà giúp đỡ đồng đội.
Dialogue: 0,0:18:53.26,0:18:54.34,Default,,0,0,0,,Sau đó…
Dialogue: 0,0:18:54.42,0:18:55.84,Default,,0,0,0,,{\i1}Nơi Người Gõ Cửa nhắm trúng{\i0}
Dialogue: 0,0:18:55.92,0:18:59.01,Default,,0,0,0,,{\i1}chính là tòa tháp thứ chín\Nmà chúng tôi đang đứng.{\i0}
Dialogue: 0,0:18:59.68,0:19:02.35,Default,,0,0,0,,Tôi đã xin lỗi vì việc đó rồi mà.
Dialogue: 0,0:19:02.43,0:19:04.64,Default,,0,0,0,,Đây không phải xin lỗi là giải quyết được.
Dialogue: 0,0:19:04.72,0:19:06.56,Default,,0,0,0,,Anh đã làm một việc không thể cứu vãn.
Dialogue: 0,0:19:06.64,0:19:08.56,Default,,0,0,0,,Không sao đâu, Camu.
Dialogue: 0,0:19:09.15,0:19:11.31,Default,,0,0,0,,Đều là tại tôi quá yếu.
Dialogue: 0,0:19:11.90,0:19:13.53,Default,,0,0,0,,Đừng to tiếng nữa.
Dialogue: 0,0:19:14.19,0:19:16.53,Default,,0,0,0,,Xin lỗi đã làm chị tỉnh giấc.
Dialogue: 0,0:19:16.61,0:19:18.03,Default,,0,0,0,,Tay cô ấy bị sao vậy?
Dialogue: 0,0:19:18.11,0:19:19.32,Default,,0,0,0,,Kahaku làm đấy!
Dialogue: 0,0:19:19.41,0:19:22.03,Default,,0,0,0,,Anh ta đã chặt đứt tay Yuis.
Dialogue: 0,0:19:22.12,0:19:23.87,Default,,0,0,0,,Đó là cánh tay trái làm.
Dialogue: 0,0:19:23.95,0:19:26.20,Default,,0,0,0,,Người Gõ Cửa đã xâm nhập\Nvào tay cô ấy rồi.
Dialogue: 0,0:19:26.29,0:19:28.17,Default,,0,0,0,,Nhưng không thể nói chặt là chặt được.
Dialogue: 0,0:19:28.25,0:19:31.79,Default,,0,0,0,,Nói đúng ra thì do lúc đó\Ncậu đã không bảo vệ được cô ấy.
Dialogue: 0,0:19:31.88,0:19:34.05,Default,,0,0,0,,- Cái gì?\N- Đừng nói nữa, Camu.
Dialogue: 0,0:19:34.13,0:19:37.55,Default,,0,0,0,,Là do tôi nên mọi người\Nmới phải khổ sở thế này. Xin lỗi.
Dialogue: 0,0:19:37.63,0:19:39.89,Default,,0,0,0,,Fushi, anh không cần xin lỗi đâu.
Dialogue: 0,0:19:39.97,0:19:41.80,Default,,0,0,0,,Đây là vấn đề của tôi.
Dialogue: 0,0:19:41.89,0:19:43.56,Default,,0,0,0,,Vậy là anh thừa nhận rồi nhé.
Dialogue: 0,0:19:43.64,0:19:45.93,Default,,0,0,0,,Anh là kẻ ủng hộ Người Gõ Cửa.
Dialogue: 0,0:19:47.60,0:19:49.06,Default,,0,0,0,,Cậu nói linh tinh gì thế?
Dialogue: 0,0:19:49.14,0:19:50.90,Default,,0,0,0,,Sao tôi có thể làm thế được?
Dialogue: 0,0:19:50.98,0:19:53.44,Default,,0,0,0,,Tôi đâu có hèn như vậy.
Dialogue: 0,0:19:53.52,0:19:56.15,Default,,0,0,0,,Kai, chúng ta là đồng đội mà,
Dialogue: 0,0:19:56.23,0:19:57.49,Default,,0,0,0,,đúng không?
Dialogue: 0,0:19:57.57,0:19:58.78,Default,,0,0,0,,Ừ, đúng vậy.
Dialogue: 0,0:19:58.86,0:20:01.32,Default,,0,0,0,,Thế thì mau cởi trói giúp tôi đi.
Dialogue: 0,0:20:01.41,0:20:02.62,Default,,0,0,0,,Thế này phí thời gian quá.
Dialogue: 0,0:20:02.70,0:20:04.49,Default,,0,0,0,,Cậu yên tâm.
Dialogue: 0,0:20:04.58,0:20:08.25,Default,,0,0,0,,Tôi luôn tin rằng\Nmọi việc sẽ đi đúng hướng.
Dialogue: 0,0:20:08.33,0:20:11.58,Default,,0,0,0,,Bây giờ cậu hãy cố chịu một chút,\Nsẽ tốt cho tất cả mọi người.
Dialogue: 0,0:20:12.92,0:20:16.88,Default,,0,0,0,,Tôi biết rồi,\NBon muốn anh làm vậy đúng không?
Dialogue: 0,0:20:16.96,0:20:18.80,Default,,0,0,0,,Anh bị người đó lừa rồi.
Dialogue: 0,0:20:19.59,0:20:22.59,Default,,0,0,0,,Anh ta chỉ muốn lợi dụng Fushi
Dialogue: 0,0:20:22.68,0:20:26.51,Default,,0,0,0,,để củng cố địa vị của mình\Nnhư hồi ở Uralis thôi.
Dialogue: 0,0:20:27.10,0:20:29.10,Default,,0,0,0,,Tôi cho rằng làm vậy không có gì sai cả.
Dialogue: 0,0:20:29.77,0:20:32.48,Default,,0,0,0,,Các anh đều không hiểu!
Dialogue: 0,0:20:32.56,0:20:36.73,Default,,0,0,0,,Chính anh còn không biết mình\Nđang chiến đấu vì ai, vì cái gì.
Dialogue: 0,0:20:37.32,0:20:44.03,Default,,0,0,0,,{\i1}Theo giáo lí, thần linh\Nđã tạo ra con người rất hoàn hảo.{\i0}
Dialogue: 0,0:20:44.12,0:20:46.74,Default,,0,0,0,,Vậy thì Fushi nên giải thích thế nào đây?
Dialogue: 0,0:20:46.83,0:20:48.95,Default,,0,0,0,,Tại sao chỉ có anh ấy khác với người khác?
Dialogue: 0,0:20:49.04,0:20:50.37,Default,,0,0,0,,Câu trả lời rất đơn giản.
Dialogue: 0,0:20:50.46,0:20:52.50,Default,,0,0,0,,Bởi vì anh ấy bị nguyền rủa.
Dialogue: 0,0:20:52.58,0:20:55.46,Default,,0,0,0,,Đã bị ác quỷ đen nguyền rủa.
Dialogue: 0,0:20:55.54,0:20:57.13,Default,,0,0,0,,Ác quỷ đen nguyền rủa?
Dialogue: 0,0:20:57.21,0:21:00.92,Default,,0,0,0,,Hairo, Messar, và cả anh nữa, Kai.
Dialogue: 0,0:21:01.59,0:21:06.14,Default,,0,0,0,,Ba người các anh\Nđã thề trung thành với ác quỷ.
Dialogue: 0,0:21:09.77,0:21:10.81,Default,,0,0,0,,Đó là gì vậy?
Dialogue: 0,0:21:10.89,0:21:12.56,Default,,0,0,0,,Người Gõ Cửa giống mới à?
Dialogue: 0,0:21:15.36,0:21:17.82,Default,,0,0,0,,Tên kia đang trộm đồ.
Dialogue: 0,0:21:17.90,0:21:19.23,Default,,0,0,0,,Mặc kệ hắn đi.
Dialogue: 0,0:21:19.32,0:21:22.20,Default,,0,0,0,,Messar, tôi có việc gấp cần tìm anh.
Dialogue: 0,0:21:22.28,0:21:23.28,Default,,0,0,0,,Cô đang làm gì thế hả?
Dialogue: 0,0:21:23.36,0:21:24.74,Default,,0,0,0,,Mau vào phòng, đừng ra ngoài.
Dialogue: 0,0:21:25.49,0:21:26.66,Default,,0,0,0,,Không biết tại sao…
Dialogue: 0,0:21:26.74,0:21:28.70,Default,,0,0,0,,Quốc vương gọi anh tới.
Dialogue: 0,0:21:30.66,0:21:32.16,Default,,0,0,0,,{\i1}Tại sao…{\i0}
Dialogue: 0,0:21:32.25,0:21:35.88,Default,,0,0,0,,Tại sao anh nhất định\Nphải bảo vệ dân chúng?
Dialogue: 0,0:21:35.96,0:21:39.38,Default,,0,0,0,,Là vì ác quỷ kia\Nbắt anh chiến đấu phải không?
Dialogue: 0,0:21:39.46,0:21:43.09,Default,,0,0,0,,Sự đau khổ của anh chính là bắt đầu từ đó.
Dialogue: 0,0:21:43.17,0:21:44.34,Default,,0,0,0,,Tôi không biết nữa.
Dialogue: 0,0:21:44.43,0:21:46.43,Default,,0,0,0,,Xin anh đừng tự ép buộc bản thân nữa.
Dialogue: 0,0:21:46.51,0:21:49.06,Default,,0,0,0,,Nếu cảm thấy đau khổ thì bỏ cuộc đi.
Dialogue: 0,0:21:49.14,0:21:50.85,Default,,0,0,0,,Thế giới này
Dialogue: 0,0:21:50.93,0:21:54.39,Default,,0,0,0,,chỉ có anh là không thể thoát khỏi\Ncuộc sống đau đớn.
Dialogue: 0,0:21:54.48,0:21:55.69,Default,,0,0,0,,Vậy thì bất công quá.
Dialogue: 0,0:21:55.77,0:21:59.02,Default,,0,0,0,,Chỉ có anh chịu sự nguyền rủa.
Dialogue: 0,0:21:59.11,0:22:02.49,Default,,0,0,0,,{\i1}Anh chỉ cần vờ như không nghe thấy\Nnhững tiếng la hét,{\i0}
Dialogue: 0,0:22:03.07,0:22:05.70,Default,,0,0,0,,{\i1}chỉ cần nhắm mắt lại,\Nđừng nhìn vào những cảnh tượng xấu xí,{\i0}
Dialogue: 0,0:22:06.36,0:22:09.16,Default,,0,0,0,,{\i1}cũng không cần nói những lời khách sáo.{\i0}
Dialogue: 0,0:22:10.54,0:22:13.12,Default,,0,0,0,,Cậu muốn tôi không cảm thấy gì nữa sao?
Dialogue: 0,0:22:14.50,0:22:16.50,Default,,0,0,0,,Tôi không làm được.
Dialogue: 0,0:22:18.04,0:22:19.13,Default,,0,0,0,,Messar!
Dialogue: 0,0:22:24.92,0:22:26.34,Default,,0,0,0,,Theo ý kiến của tôi
Dialogue: 0,0:22:26.43,0:22:29.18,Default,,0,0,0,,thì yêu cầu của cậu cũng không tệ.
Dialogue: 0,0:22:30.60,0:22:33.89,Default,,0,0,0,,Rốt cuộc chúng ta muốn bảo vệ cái gì?
Dialogue: 0,0:22:34.48,0:22:37.35,Default,,0,0,0,,Nếu không phải bảo vệ mạng người\Nthì còn là gì nữa?
Dialogue: 0,0:22:41.19,0:22:43.69,Default,,0,0,0,,Thứ tôi muốn bảo vệ…
Dialogue: 0,0:22:43.78,0:22:46.45,Default,,0,0,0,,là tình người của anh ấy.
Dialogue: 0,0:22:57.83,0:23:00.59,Default,,0,0,0,,{\i1}Có nghĩa là "March rất khỏe".{\i0}
Dialogue: 0,0:24:33.01,0:24:34.35,Default,,0,0,0,,GIỚI THIỆU TẬP SAU
Dialogue: 0,0:24:34.43,0:24:38.27,Default,,0,0,0,,{\i1}Fushi cũng không biết\Nbí mật về sự hồi sinh người chết.{\i0}
Dialogue: 0,0:24:39.27,0:24:41.10,Default,,0,0,0,,{\i1}Đối mặt với câu hỏi của Kahaku,{\i0}
Dialogue: 0,0:24:41.19,0:24:44.65,Default,,0,0,0,,{\i1}Bon đã nói ra\Nnhững suy nghĩ nặng nề của mình.{\i0}
Dialogue: 0,0:24:44.73,0:24:48.28,Default,,0,0,0,,{\i1}Tất cả đều vì bảo vệ những thứ quan trọng.{\i0}
Dialogue: 0,0:24:49.36,0:24:52.16,Default,,0,0,0,,{\i1}Trên chiến trường hỗn loạn,{\i0}
Dialogue: 0,0:24:52.24,0:24:55.62,Default,,0,0,0,,{\i1}Công chúa Arume rơi vào hiểm nguy.{\i0}
