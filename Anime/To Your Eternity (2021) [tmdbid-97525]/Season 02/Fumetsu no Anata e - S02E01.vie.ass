Dialogue: 0,0:00:04.63,0:00:07.88,Default,,0,0,0,,{\i1}Sự tồn tại thần bí trên thế giới này{\i0}
Dialogue: 0,0:00:08.51,0:00:10.93,Default,,0,0,0,,{\i1}có cả những sinh mạng trường sinh bất tử.{\i0}
Dialogue: 0,0:00:11.76,0:00:13.14,Default,,0,0,0,,{\i1}Fushi{\i0}
Dialogue: 0,0:00:13.22,0:00:14.85,Default,,0,0,0,,{\i1}và những người cậu ấy gặp gỡ,{\i0}
Dialogue: 0,0:00:14.93,0:00:18.52,Default,,0,0,0,,{\i1}tình cảm, nỗi đau, cái chết,{\i0}
Dialogue: 0,0:00:18.60,0:00:21.81,Default,,0,0,0,,{\i1}đều đã kích thích Fushi,\Ngiúp cậu trưởng thành{\i0}
Dialogue: 0,0:00:22.90,0:00:25.23,Default,,0,0,0,,{\i1}và tích lũy kinh nghiệm.{\i0}
Dialogue: 0,0:00:26.82,0:00:29.11,Default,,0,0,0,,{\i1}Hành trình của Fushi vẫn còn tiếp diễn.{\i0}
Dialogue: 0,0:00:30.57,0:00:32.11,Default,,0,0,0,,{\i1}Cậu ta kỳ vọng…{\i0}
Dialogue: 0,0:00:32.20,0:00:36.08,Default,,0,0,0,,{\i1}đây là hành trình\Nchỉ thuộc về bản thân mình.{\i0}
Dialogue: 0,0:02:35.53,0:02:36.40,Default,,0,0,0,,Rồi.
Dialogue: 0,0:02:39.74,0:02:40.78,Default,,0,0,0,,Cảm ơn nhé.
Dialogue: 0,0:02:58.34,0:02:59.76,Default,,0,0,0,,Chạy mau.
Dialogue: 0,0:03:00.76,0:03:01.97,Default,,0,0,0,,Bố ơi!
Dialogue: 0,0:03:14.86,0:03:15.94,Default,,0,0,0,,Nhanh lên.
Dialogue: 0,0:04:03.57,0:04:05.91,Default,,0,0,0,,Tôi đến hòn đảo này đã được bao lâu rồi?
Dialogue: 0,0:04:08.29,0:04:10.29,Default,,0,0,0,,Gần 40 năm rồi.
Dialogue: 0,0:04:12.92,0:04:16.96,Default,,0,0,0,,Nhiều năm như vậy rồi,\Nrốt cuộc tôi đang làm gì thế?
Dialogue: 0,0:04:17.05,0:04:20.68,Default,,0,0,0,,Cậu có nhiệm vụ bảo tồn vạn vật.
Dialogue: 0,0:04:20.76,0:04:22.76,Default,,0,0,0,,Tôi biết rồi.
Dialogue: 0,0:04:22.84,0:04:25.01,Default,,0,0,0,,Nhưng mà nhiệm vụ này sẽ kéo dài bao lâu?
Dialogue: 0,0:04:26.22,0:04:31.73,Default,,0,0,0,,Nếu có thể tái hiện khoảng biển kia\Nthì coi như đã hoàn thành.
Dialogue: 0,0:04:33.02,0:04:34.40,Default,,0,0,0,,Như vậy không được sao?
Dialogue: 0,0:04:34.48,0:04:36.94,Default,,0,0,0,,Cậu cần có ý thức.
Dialogue: 0,0:04:38.44,0:04:41.32,Default,,0,0,0,,Ý thức rằng\Nđó là tất cả những thứ thuộc về ta.
Dialogue: 0,0:04:42.61,0:04:44.32,Default,,0,0,0,,Thế thì phải đợi 1.000 năm nữa mất.
Dialogue: 0,0:04:50.29,0:04:51.50,Default,,0,0,0,,Cậu cảm thấy cô đơn sao?
Dialogue: 0,0:04:51.58,0:04:53.46,Default,,0,0,0,,Cảm thấy rất rảnh rỗi.
Dialogue: 0,0:04:53.54,0:04:56.96,Default,,0,0,0,,Vậy thì lặn xuống biển lần nữa,\Nnô đùa với bạn bè dưới biển đi.
Dialogue: 0,0:04:57.04,0:05:00.97,Default,,0,0,0,,Đừng đùa nữa,\Nđó thực sự là trải nghiệm không vui đâu.
Dialogue: 0,0:05:01.05,0:05:03.30,Default,,0,0,0,,Sau lần đó tôi cũng chẳng dám ăn cá nữa.
Dialogue: 0,0:05:04.51,0:05:07.85,Default,,0,0,0,,{\i1}Khi đó tôi chỉ muốn đối đầu với ông ta.{\i0}
Dialogue: 0,0:05:09.60,0:05:10.43,Default,,0,0,0,,{\i1}Không…{\i0}
Dialogue: 0,0:05:14.10,0:05:17.40,Default,,0,0,0,,{\i1}Ước mơ của cháu là gì vậy Fushi?{\i0}
Dialogue: 0,0:05:17.48,0:05:21.15,Default,,0,0,0,,{\i1}Hãy đi thực hiện ước mơ của mình\Ngiống như ta nhé.{\i0}
Dialogue: 0,0:05:21.24,0:05:27.03,Default,,0,0,0,,{\i1}Vì vậy tôi đã hạ quyết tâm không gặp\Nbất kỳ ai nữa{\i0}
Dialogue: 0,0:05:27.87,0:05:30.24,Default,,0,0,0,,{\i1}và quyết định trở thành một con cua.{\i0}
Dialogue: 0,0:05:30.83,0:05:32.04,Default,,0,0,0,,Thật là đặc sắc.
Dialogue: 0,0:05:32.12,0:05:36.54,Default,,0,0,0,,Cậu muốn có được những thứ\Nkhông thể có trong hình dạng con người.
Dialogue: 0,0:05:37.59,0:05:38.79,Default,,0,0,0,,Chuyện này là sao thế?
Dialogue: 0,0:05:38.88,0:05:39.92,Default,,0,0,0,,Sao lại thế này?
Dialogue: 0,0:05:41.67,0:05:44.43,Default,,0,0,0,,{\i1}Hóa ra có loài cua không thể nhìn thấy gì.{\i0}
Dialogue: 0,0:05:44.51,0:05:46.80,Default,,0,0,0,,{\i1}Chuyện đã xảy ra tiếp đó\Ntôi không nhớ rõ nữa.{\i0}
Dialogue: 0,0:05:49.72,0:05:51.97,Default,,0,0,0,,{\i1}Tôi đã biến thành đủ mọi hình dạng.{\i0}
Dialogue: 0,0:05:58.90,0:06:00.44,Default,,0,0,0,,{\i1}Theo lời người áo đen nói{\i0}
Dialogue: 0,0:06:01.19,0:06:04.65,Default,,0,0,0,,{\i1}tôi đã ngao du dưới đáy biển\Nkhoảng hai năm gì đó.{\i0}
Dialogue: 0,0:06:12.41,0:06:14.16,Default,,0,0,0,,{\i1}Tên này là bạn hồi nhỏ của tôi,{\i0}
Dialogue: 0,0:06:14.25,0:06:17.46,Default,,0,0,0,,{\i1}là kẻ vô cùng thân thiết với loài động vật\Nkhông nhìn thấy gì như tôi,{\i0}
Dialogue: 0,0:06:17.54,0:06:20.96,Default,,0,0,0,,{\i1}khiến tôi khỏi cần suy nghĩ về việc\Ncó nên làm người tiếp hay không.{\i0}
Dialogue: 0,0:06:21.05,0:06:23.76,Default,,0,0,0,,{\i1}Cùng lắm chỉ cần nghĩ về\Nmùi vị và món ăn mình thích thôi.{\i0}
Dialogue: 0,0:06:23.84,0:06:25.51,Default,,0,0,0,,{\i1}Thi thoảng đề phòng kẻ địch nữa.{\i0}
Dialogue: 0,0:06:25.59,0:06:27.72,Default,,0,0,0,,{\i1}Chỉ thế mà thôi, có điều…{\i0}
Dialogue: 0,0:06:27.80,0:06:30.43,Default,,0,0,0,,{\i1}khi nó chết đi tôi lại cảm thấy đau buồn.{\i0}
Dialogue: 0,0:06:30.51,0:06:32.01,Default,,0,0,0,,{\i1}Cứ nghĩ đến đây…{\i0}
Dialogue: 0,0:06:33.72,0:06:35.14,Default,,0,0,0,,{\i1}nó liền chủ động rời bỏ tôi.{\i0}
Dialogue: 0,0:06:43.15,0:06:44.65,Default,,0,0,0,,Người Gõ Cửa đến rồi.
Dialogue: 0,0:06:45.28,0:06:49.07,Default,,0,0,0,,{\i1}Tôi lập tức nhớ lại\Nchuyện của bà Pioran và mọi người.{\i0}
Dialogue: 0,0:06:49.99,0:06:53.49,Default,,0,0,0,,{\i1}Và cả chuyện tôi không thể\Nmột mình đối phó với Người Gõ Cửa.{\i0}
Dialogue: 0,0:06:59.71,0:07:02.00,Default,,0,0,0,,{\i1}Mũi tên có thể phát nổ này dùng được đấy.{\i0}
Dialogue: 0,0:07:06.84,0:07:08.72,Default,,0,0,0,,{\i1}Người Gõ Cửa vẫn chưa đi.{\i0}
Dialogue: 0,0:07:11.76,0:07:15.10,Default,,0,0,0,,{\i1}Cơ thể của Uroy hợp với cung dài hơn.{\i0}
Dialogue: 0,0:07:23.11,0:07:26.36,Default,,0,0,0,,{\i1}Đột nhiên tôi có cảm giác tội lỗi…{\i0}
Dialogue: 0,0:07:26.44,0:07:30.49,Default,,0,0,0,,{\i1}Tôi chán ghét việc bản thân\Nsống bằng sự hy sinh của người khác.{\i0}
Dialogue: 0,0:07:30.57,0:07:34.16,Default,,0,0,0,,{\i1}Tôi càng căm ghét\Ncảm giác mất đi mọi người.{\i0}
Dialogue: 0,0:07:39.96,0:07:42.33,Default,,0,0,0,,{\i1}Sau đó Người Gõ Cửa lại đến nữa.{\i0}
Dialogue: 0,0:07:42.42,0:07:43.96,Default,,0,0,0,,{\i1}Tôi chỉ tiếp tục chiến đấu,{\i0}
Dialogue: 0,0:07:44.04,0:07:44.96,Default,,0,0,0,,{\i1}đánh bại nó,{\i0}
Dialogue: 0,0:07:45.75,0:07:47.26,Default,,0,0,0,,{\i1}ăn thịt nó…{\i0}
Dialogue: 0,0:07:48.67,0:07:50.47,Default,,0,0,0,,{\i1}Bốn mươi năm…{\i0}
Dialogue: 0,0:07:51.97,0:07:54.72,Default,,0,0,0,,{\i1}Mọi người vẫn ổn chứ?{\i0}
Dialogue: 0,0:07:54.81,0:07:58.52,Default,,0,0,0,,{\i1}Rean và Tonari chắc cũng già rồi nhỉ.{\i0}
Dialogue: 0,0:08:00.60,0:08:02.27,Default,,0,0,0,,{\i1}Không đâu, chắc mọi người vẫn khỏe.{\i0}
Dialogue: 0,0:08:02.35,0:08:05.11,Default,,0,0,0,,Xin lỗi đã làm phiền lúc cậu đang ủ rũ.
Dialogue: 0,0:08:05.19,0:08:07.36,Default,,0,0,0,,Lại đến rồi à? Nó đâu rồi?
Dialogue: 0,0:08:07.94,0:08:11.61,Default,,0,0,0,,Nó đã phá phách khắp nơi\Nngoài hòn đảo này.
Dialogue: 0,0:08:11.70,0:08:13.16,Default,,0,0,0,,Tại sao không đến đây chứ?
Dialogue: 0,0:08:13.24,0:08:15.78,Default,,0,0,0,,Chắc là nó đã bỏ cuộc với cậu rồi.
Dialogue: 0,0:08:16.49,0:08:18.00,Default,,0,0,0,,Nó muốn dọn vật ngáng đường trước
Dialogue: 0,0:08:18.08,0:08:20.92,Default,,0,0,0,,hoặc là muốn dẫn dụ cậu ra khỏi đảo.
Dialogue: 0,0:08:21.00,0:08:23.42,Default,,0,0,0,,Lẽ nào nó lại tấn công con người rồi?
Dialogue: 0,0:08:25.00,0:08:28.09,Default,,0,0,0,,- Đưa tôi tới đó đi.\N- Bây giờ đi cũng phải mất một tháng.
Dialogue: 0,0:08:28.17,0:08:29.88,Default,,0,0,0,,Cậu vẫn muốn bị lừa à?
Dialogue: 0,0:08:29.97,0:08:32.22,Default,,0,0,0,,Có thể sẽ có người bỏ mạng đấy.
Dialogue: 0,0:08:32.30,0:08:34.26,Default,,0,0,0,,Quá muộn rồi, đã có người chết rồi.
Dialogue: 0,0:08:36.31,0:08:39.39,Default,,0,0,0,,Chết tiệt, Người Gõ Cửa khốn kiếp!
Dialogue: 0,0:08:39.48,0:08:42.23,Default,,0,0,0,,Không ngờ lại dùng thủ đoạn bỉ ổi này.
Dialogue: 0,0:08:42.31,0:08:44.69,Default,,0,0,0,,Phải có cách gì thông minh hơn đi chứ.
Dialogue: 0,0:08:47.69,0:08:49.69,Default,,0,0,0,,Đi thôi, rời khỏi hòn đảo này.
Dialogue: 0,0:08:50.49,0:08:51.65,Default,,0,0,0,,Ta biết rồi.
Dialogue: 0,0:08:53.32,0:08:56.28,Default,,0,0,0,,{\i1}Nhưng mà một mình mình sẽ không sao chứ?{\i0}
Dialogue: 0,0:08:56.37,0:08:58.33,Default,,0,0,0,,{\i1}Không, bây giờ đừng nghĩ nhiều nữa.{\i0}
Dialogue: 0,0:08:58.41,0:09:00.70,Default,,0,0,0,,Cuối cùng cũng tìm được anh rồi, Fushi.
Dialogue: 0,0:09:02.37,0:09:04.50,Default,,0,0,0,,Rất vui được gặp, tôi là Hisame.
Dialogue: 0,0:09:04.58,0:09:06.50,Default,,0,0,0,,Rất cảm ơn anh đã\Nchăm sóc bà ngoại Hayase.
Dialogue: 0,0:09:07.09,0:09:09.09,Default,,0,0,0,,Bà ngoại? Cháu gái Hayase ư?
Dialogue: 0,0:09:09.17,0:09:13.01,Default,,0,0,0,,Vâng, bây giờ là tôi\Nchỉ huy Đoàn Hộ Vệ bảo vệ anh.
Dialogue: 0,0:09:13.09,0:09:15.22,Default,,0,0,0,,- Tôi đến chào hỏi…\N- Khoan, sao các người biết tôi ở đây?
Dialogue: 0,0:09:18.72,0:09:21.56,Default,,0,0,0,,Tôi đã tìm anh rất lâu,
Dialogue: 0,0:09:21.64,0:09:24.48,Default,,0,0,0,,luôn mong có thể gặp được anh\Nnên tìm đường tới đây.
Dialogue: 0,0:09:24.56,0:09:25.98,Default,,0,0,0,,Buông tôi ra.
Dialogue: 0,0:09:27.61,0:09:29.36,Default,,0,0,0,,Trên người anh hơi có mùi.
Dialogue: 0,0:09:29.44,0:09:31.36,Default,,0,0,0,,Anh có tắm không vậy?
Dialogue: 0,0:09:32.78,0:09:34.53,Default,,0,0,0,,Sao nhóc lại đột nhiên ôm tôi hả?
Dialogue: 0,0:09:34.61,0:09:37.53,Default,,0,0,0,,Xin lỗi, mẹ đã dạy tôi làm vậy đó.
Dialogue: 0,0:09:37.62,0:09:40.04,Default,,0,0,0,,Mẹ? Là con gái của Hayase sao?
Dialogue: 0,0:09:40.12,0:09:41.37,Default,,0,0,0,,Hayase đâu?
Dialogue: 0,0:09:41.45,0:09:43.33,Default,,0,0,0,,Bà đã mất trước khi tôi sinh ra rồi.
Dialogue: 0,0:09:44.79,0:09:47.21,Default,,0,0,0,,Vậy ư? Kẻ đó đã chết rồi sao?
Dialogue: 0,0:09:47.29,0:09:49.04,Default,,0,0,0,,Giọng điệu của anh…
Dialogue: 0,0:09:49.13,0:09:52.13,Default,,0,0,0,,Trong truyện ký bà để lại có viết
Dialogue: 0,0:09:52.21,0:09:55.05,Default,,0,0,0,,anh là một người tôn trọng sinh mạng,\Nvà rất lương thiện…
Dialogue: 0,0:09:55.13,0:10:00.47,Default,,0,0,0,,Trên truyện ký có viết cô ta đã giết\Nhai người bạn quan trọng của tôi không?
Dialogue: 0,0:10:00.56,0:10:03.23,Default,,0,0,0,,Có viết, đó là việc bất đắc dĩ phải làm.
Dialogue: 0,0:10:03.31,0:10:04.60,Default,,0,0,0,,Bất đắc dĩ phải làm…
Dialogue: 0,0:10:04.69,0:10:06.27,Default,,0,0,0,,Nhóc mấy tuổi rồi?
Dialogue: 0,0:10:06.35,0:10:07.27,Default,,0,0,0,,Chín tuổi.
Dialogue: 0,0:10:07.35,0:10:09.65,Default,,0,0,0,,Thế thì nhóc hoàn toàn chẳng hiểu gì cả.
Dialogue: 0,0:10:09.73,0:10:13.61,Default,,0,0,0,,Đáng thương thật đấy, bị người lớn\Nnhồi nhét những quan niệm sai lầm.
Dialogue: 0,0:10:13.69,0:10:15.74,Default,,0,0,0,,Không hiểu mới tốt mà.
Dialogue: 0,0:10:16.41,0:10:20.74,Default,,0,0,0,,Bởi vì sau này sẽ gặp được\Nnhững bất ngờ và cảm xúc mới.
Dialogue: 0,0:10:20.83,0:10:23.45,Default,,0,0,0,,Ví dụ như chuyện đúng, chuyện sai,
Dialogue: 0,0:10:23.54,0:10:25.58,Default,,0,0,0,,chuyện liên quan đến anh, đến tình yêu.
Dialogue: 0,0:10:28.83,0:10:29.67,Default,,0,0,0,,Nói cũng phải.
Dialogue: 0,0:10:30.54,0:10:32.42,Default,,0,0,0,,Thế thì tôi đi được chưa?
Dialogue: 0,0:10:32.50,0:10:33.76,Default,,0,0,0,,Tôi còn có việc.
Dialogue: 0,0:10:33.84,0:10:35.01,Default,,0,0,0,,Tôi cũng sẽ đi cùng anh.
Dialogue: 0,0:10:35.09,0:10:38.22,Default,,0,0,0,,Tôi là người hộ vệ của anh,\Nbảo vệ anh khỏi bị quái vật tấn công.
Dialogue: 0,0:10:38.30,0:10:40.22,Default,,0,0,0,,Mới có chín tuổi mà đòi bảo vệ tôi sao?
Dialogue: 0,0:10:40.30,0:10:41.85,Default,,0,0,0,,Lỡ bị tấn công không ai cứu đâu.
Dialogue: 0,0:10:41.93,0:10:42.93,Default,,0,0,0,,Tôi biết rồi.
Dialogue: 0,0:10:43.47,0:10:45.10,Default,,0,0,0,,Tùy nhóc vậy.
Dialogue: 0,0:10:45.18,0:10:46.14,Default,,0,0,0,,Vâng.
Dialogue: 0,0:10:47.52,0:10:49.94,Default,,0,0,0,,Làm gì thế? Ghê chết đi được.
Dialogue: 0,0:10:50.02,0:10:51.52,Default,,0,0,0,,Cách xa tôi ít nhất năm mét đi.
Dialogue: 0,0:10:52.69,0:10:53.78,Default,,0,0,0,,Tôi xin lỗi.
Dialogue: 0,0:11:02.33,0:11:04.62,Default,,0,0,0,,Hãy cùng ăn đi, ngon lắm đấy.
Dialogue: 0,0:11:04.70,0:11:07.04,Default,,0,0,0,,Không cần, tôi có cái này rồi.
Dialogue: 0,0:11:07.54,0:11:09.17,Default,,0,0,0,,Đó là gì vậy?
Dialogue: 0,0:11:09.25,0:11:11.17,Default,,0,0,0,,Thịt Người Gõ Cửa ướp muối phơi khô.
Dialogue: 0,0:11:11.71,0:11:13.21,Default,,0,0,0,,Anh lại ăn cái thứ đó sao?
Dialogue: 0,0:11:14.34,0:11:16.30,Default,,0,0,0,,Xin mời dùng.
Dialogue: 0,0:11:16.38,0:11:17.72,Default,,0,0,0,,Không cần.
Dialogue: 0,0:11:17.80,0:11:18.88,Default,,0,0,0,,Xin phép nhé.
Dialogue: 0,0:11:20.43,0:11:21.76,Default,,0,0,0,,Chúc ngủ ngon.
Dialogue: 0,0:11:26.39,0:11:28.52,Default,,0,0,0,,Tôi đã pha trà đây, xin mời.
Dialogue: 0,0:11:28.60,0:11:30.98,Default,,0,0,0,,Bị rách rồi này, để tôi khâu giúp anh.
Dialogue: 0,0:11:31.06,0:11:32.48,Default,,0,0,0,,Để tôi giúp anh nhé.
Dialogue: 0,0:11:33.07,0:11:34.53,Default,,0,0,0,,Tôi cọ lưng giúp anh nhé?
Dialogue: 0,0:11:37.07,0:11:39.66,Default,,0,0,0,,{\i1}Tốt, chỗ này đủ xa rồi.{\i0}
Dialogue: 0,0:11:40.28,0:11:42.45,Default,,0,0,0,,{\i1}Nếu đến nơi bị Người Gõ Cửa tấn công,{\i0}
Dialogue: 0,0:11:42.53,0:11:45.41,Default,,0,0,0,,{\i1}mình sẽ lại dẫn dụ Người Gõ Cửa khác đến.{\i0}
Dialogue: 0,0:11:45.49,0:11:48.91,Default,,0,0,0,,{\i1}Nhưng nếu có thể lợi dụng nhóm Hisame,{\i0}
Dialogue: 0,0:11:49.00,0:11:50.37,Default,,0,0,0,,{\i1}biết đâu có thể cứu thị trấn.{\i0}
Dialogue: 0,0:11:52.25,0:11:53.25,Default,,0,0,0,,{\i1}Hisame…{\i0}
Dialogue: 0,0:11:54.42,0:11:58.63,Default,,0,0,0,,{\i1}Mặc dù là cháu gái của Hayase,\Nnhưng có vẻ không phải kẻ nguy hiểm.{\i0}
Dialogue: 0,0:12:13.23,0:12:14.15,Default,,0,0,0,,Không được.
Dialogue: 0,0:12:14.73,0:12:15.86,Default,,0,0,0,,Làm gì hả?
Dialogue: 0,0:12:15.94,0:12:19.65,Default,,0,0,0,,Xin lỗi, tôi chỉ muốn ngủ cùng anh thôi.
Dialogue: 0,0:12:20.24,0:12:21.16,Default,,0,0,0,,{\i1}Cảm giác đau này…{\i0}
Dialogue: 0,0:12:21.24,0:12:22.45,Default,,0,0,0,,Để tôi xem.
Dialogue: 0,0:12:23.82,0:12:25.45,Default,,0,0,0,,Thật là bất ngờ.
Dialogue: 0,0:12:25.53,0:12:29.04,Default,,0,0,0,,Đây chính là cách thông minh\Nmà Người Gõ Cửa nghĩ ra đấy.
Dialogue: 0,0:12:29.12,0:12:31.42,Default,,0,0,0,,{\i1}Tên khốn, cố tình giấu tôi.{\i0}
Dialogue: 0,0:12:32.00,0:12:35.25,Default,,0,0,0,,Xin lỗi, tôi không định làm anh sợ đâu.
Dialogue: 0,0:12:35.34,0:12:36.55,Default,,0,0,0,,Do tay tôi không nghe lời.
Dialogue: 0,0:12:36.63,0:12:39.67,Default,,0,0,0,,Nhóc muốn tấn công ta\Nmà gọi gì là Đoàn Hộ Vệ hả?
Dialogue: 0,0:12:41.09,0:12:42.26,Default,,0,0,0,,Ta phải cắt nó đi.
Dialogue: 0,0:12:44.09,0:12:45.22,Default,,0,0,0,,Không được.
Dialogue: 0,0:12:45.30,0:12:48.97,Default,,0,0,0,,Người Gõ Cửa này là bà ngoại\Ntruyền cho mẹ, rồi mẹ truyền lại cho tôi.
Dialogue: 0,0:12:49.06,0:12:50.77,Default,,0,0,0,,Nó đại diện cho ý chí của Đoàn Hộ Vệ.
Dialogue: 0,0:12:50.85,0:12:51.77,Default,,0,0,0,,Hả?
Dialogue: 0,0:12:51.85,0:12:54.61,Default,,0,0,0,,Nó phải hút máu của tôi thì mới sống được.
Dialogue: 0,0:12:54.69,0:12:56.48,Default,,0,0,0,,Thế nên nó rất nghe lời tôi mà.
Dialogue: 0,0:12:57.15,0:13:00.44,Default,,0,0,0,,Ngoan nào, mày xem, không sao nữa rồi.
Dialogue: 0,0:13:00.53,0:13:02.61,Default,,0,0,0,,Cô có thể trò chuyện với nó sao?
Dialogue: 0,0:13:02.70,0:13:05.45,Default,,0,0,0,,Không, nhưng nó có thể hiểu lời tôi nói.
Dialogue: 0,0:13:05.53,0:13:08.29,Default,,0,0,0,,Bởi vì nó biết tôi là ai.
Dialogue: 0,0:13:09.08,0:13:11.91,Default,,0,0,0,,Tôi là Hayase đầu thai chuyển thế.
Dialogue: 0,0:13:12.00,0:13:13.04,Default,,0,0,0,,Hả?
Dialogue: 0,0:13:13.12,0:13:17.71,Default,,0,0,0,,Lúc bà còn sống đã nói\Nmình sẽ đầu thai vào trong bụng mẹ.
Dialogue: 0,0:13:17.79,0:13:19.76,Default,,0,0,0,,Vừa rồi thực sự xin lỗi anh.
Dialogue: 0,0:13:20.38,0:13:22.13,Default,,0,0,0,,Tôi sẽ quay về đó ngủ.
Dialogue: 0,0:13:24.89,0:13:25.80,Default,,0,0,0,,Ừ…
Dialogue: 0,0:13:34.60,0:13:38.36,Default,,0,0,0,,{\i1}Không ngờ Người Gõ Cửa và Hayase\Nlại biến thành cái thứ kỳ cục đó.{\i0}
Dialogue: 0,0:13:39.19,0:13:43.90,Default,,0,0,0,,Nếu không trừ khử nó\Nthì dù đi bao xa nó cũng tìm được cậu.
Dialogue: 0,0:13:43.99,0:13:46.16,Default,,0,0,0,,Chẳng sao, đây là\Ncảm nhận của mỗi người thôi.
Dialogue: 0,0:13:46.66,0:13:51.29,Default,,0,0,0,,Không ngờ con người có thể nghĩ ra cách\Nkhiến bản thân sống lâu hơn.
Dialogue: 0,0:13:51.37,0:13:54.50,Default,,0,0,0,,Chỉ cần có thể duy trì được ý chí\Nthì có thể tiếp tục tồn tại.
Dialogue: 0,0:13:54.58,0:13:56.08,Default,,0,0,0,,Đừng nói nữa.
Dialogue: 0,0:13:56.17,0:13:57.25,Default,,0,0,0,,Đầu thai gì chứ.
Dialogue: 0,0:13:57.33,0:14:00.05,Default,,0,0,0,,Bây giờ đầu óc tôi loạn hết cả lên,\Nsắp phát điên rồi.
Dialogue: 0,0:14:00.13,0:14:02.13,Default,,0,0,0,,Đó rốt cuộc là cái quỷ gì vậy?
Dialogue: 0,0:14:02.21,0:14:07.93,Default,,0,0,0,,Để động vật cử động được thì cần có\Nvật chứa và dùng phi để lấp đầy.
Dialogue: 0,0:14:08.01,0:14:13.48,Default,,0,0,0,,Một khi phi cũ được chuyển sang cơ thể mới\Nthì được gọi là "đầu thai chuyển thế".
Dialogue: 0,0:14:14.77,0:14:16.85,Default,,0,0,0,,Đợi đã, "phi" là cái gì?
Dialogue: 0,0:14:16.94,0:14:20.27,Default,,0,0,0,,Phi chính là phần năng lượng\Nlàm cho vật chứa hoạt động.
Dialogue: 0,0:14:20.36,0:14:24.32,Default,,0,0,0,,Con người gọi phi\Nlà linh hồn hoặc tinh thần.
Dialogue: 0,0:14:24.40,0:14:26.28,Default,,0,0,0,,Chắc là cậu hiểu chứ?
Dialogue: 0,0:14:26.36,0:14:30.20,Default,,0,0,0,,Thời khắc cảm giác trên cơ thể người sống
Dialogue: 0,0:14:30.28,0:14:32.45,Default,,0,0,0,,bỗng biến mất hết và trở nên trống rỗng.
Dialogue: 0,0:14:32.95,0:14:36.00,Default,,0,0,0,,Khi vật chứa bị hỏng,\Nthì phi sẽ được giải phóng.
Dialogue: 0,0:14:36.08,0:14:42.75,Default,,0,0,0,,Phi có thể dựa vào ý chí của mình\Nđi đến bất cứ đâu nó muốn.
Dialogue: 0,0:14:44.26,0:14:45.55,Default,,0,0,0,,Vậy thì…
Dialogue: 0,0:14:45.63,0:14:47.38,Default,,0,0,0,,{\i1}Bà Pioran, Gugu và March,{\i0}
Dialogue: 0,0:14:48.05,0:14:49.39,Default,,0,0,0,,{\i1}những người đã chết…{\i0}
Dialogue: 0,0:14:50.10,0:14:53.06,Default,,0,0,0,,{\i1}Chắc đang tồn tại\Nở đâu đó theo ý chí của họ.{\i0}
Dialogue: 0,0:14:55.27,0:14:58.06,Default,,0,0,0,,Nếu Hayase chết với một ý chí mãnh liệt
Dialogue: 0,0:14:58.15,0:15:01.86,Default,,0,0,0,,thì phi đi vào cơ thể Hisame\Ncũng chẳng có gì ngạc nhiên.
Dialogue: 0,0:15:02.90,0:15:09.45,Default,,0,0,0,,{\i1}Chỉ là tất cả kí ức đều bị thay đổi,\Nsống như một người khác.{\i0}
Dialogue: 0,0:15:09.53,0:15:12.87,Default,,0,0,0,,{\i1}Thế thì Hisame chính là Hisame chứ.{\i0}
Dialogue: 0,0:15:12.95,0:15:14.54,Default,,0,0,0,,Cô nhóc đó không phải là Hayase.
Dialogue: 0,0:15:14.62,0:15:17.04,Default,,0,0,0,,Đúng vậy, cậu đang lo gì thế?
Dialogue: 0,0:15:18.62,0:15:21.46,Default,,0,0,0,,Dù không phải là Hisame\Ngiết March và Parona,
Dialogue: 0,0:15:21.54,0:15:24.00,Default,,0,0,0,,nhưng tôi cứ cảm thấy khó chịu.
Dialogue: 0,0:15:24.09,0:15:28.93,Default,,0,0,0,,Tôi cứ nghĩ đơn phương căm hận\Nmột bé gái chín tuổi liệu có sai không.
Dialogue: 0,0:15:29.55,0:15:32.72,Default,,0,0,0,,Lâu nay cậu đã chịu đủ\Nsự giày vò của Hayase,
Dialogue: 0,0:15:32.80,0:15:34.56,Default,,0,0,0,,trở nên như vậy cũng là bình thường.
Dialogue: 0,0:15:34.64,0:15:38.23,Default,,0,0,0,,Đây là phản ứng đề phòng\Nthường thấy ở con người.
Dialogue: 0,0:15:38.31,0:15:42.56,Default,,0,0,0,,Nếu trạng thái bây giờ khiến cậu khó chịu,\Ncậu nên cố sinh ra khả năng miễn dịch đi.
Dialogue: 0,0:15:42.65,0:15:43.52,Default,,0,0,0,,Khả năng miễn dịch?
Dialogue: 0,0:15:44.11,0:15:46.36,Default,,0,0,0,,Chậm rãi tiếp xúc thử.
Dialogue: 0,0:15:46.44,0:15:49.45,Default,,0,0,0,,Dù lúc đầu sẽ rất đau khổ,\Nnhưng dần dần sẽ quen thôi.
Dialogue: 0,0:15:49.53,0:15:52.49,Default,,0,0,0,,Chính vì không hiểu đối phương\Nnên mới cảm thấy đau khổ.
Dialogue: 0,0:15:53.16,0:15:55.62,Default,,0,0,0,,Cậu định làm thế nào hả, Fushi?
Dialogue: 0,0:16:01.58,0:16:02.42,Default,,0,0,0,,Tìm thấy rồi.
Dialogue: 0,0:16:03.13,0:16:06.96,Default,,0,0,0,,Tôi rất lo cho anh đấy,\Nxin đừng tự ý bỏ đi nữa.
Dialogue: 0,0:16:07.05,0:16:09.42,Default,,0,0,0,,Tôi chỉ dậy sớm làm mấy con thuyền thôi.
Dialogue: 0,0:16:09.51,0:16:12.14,Default,,0,0,0,,Vì bắt buộc phải chèo thuyền\Ntới hòn đảo bên cạnh.
Dialogue: 0,0:16:12.22,0:16:14.10,Default,,0,0,0,,Cảm ơn anh nhé, Fushi.
Dialogue: 0,0:16:15.43,0:16:16.81,Default,,0,0,0,,Tôi sẽ ngồi con thuyền này.
Dialogue: 0,0:16:32.24,0:16:34.49,Default,,0,0,0,,Tuyệt quá, câu được rồi.
Dialogue: 0,0:16:34.57,0:16:36.08,Default,,0,0,0,,Fushi, tối nay ta cùng ăn nhé.
Dialogue: 0,0:16:36.16,0:16:37.37,Default,,0,0,0,,Không cần đâu.
Dialogue: 0,0:16:37.45,0:16:38.87,Default,,0,0,0,,Khó khăn lắm tôi mới câu được mà…
Dialogue: 0,0:16:42.21,0:16:43.42,Default,,0,0,0,,Hisame này,
Dialogue: 0,0:16:43.50,0:16:46.46,Default,,0,0,0,,lên đến phố thì mời thầy thuốc\Nlấy cái thứ kỳ lạ đó ra đi.
Dialogue: 0,0:16:47.17,0:16:48.46,Default,,0,0,0,,Tôi không muốn đâu.
Dialogue: 0,0:16:49.05,0:16:50.30,Default,,0,0,0,,Cô vẫn còn nhỏ tuổi,
Dialogue: 0,0:16:50.38,0:16:52.55,Default,,0,0,0,,không nên mới sớm vậy\Nđã bị người khống chế.
Dialogue: 0,0:16:54.26,0:16:57.01,Default,,0,0,0,,Anh quả đúng là người lương thiện.
Dialogue: 0,0:17:00.64,0:17:01.73,Default,,0,0,0,,Là ở đó sao?
Dialogue: 0,0:17:02.31,0:17:05.02,Default,,0,0,0,,Phải, là nơi một tháng trước\Nđã bị tấn công.
Dialogue: 0,0:17:06.82,0:17:09.57,Default,,0,0,0,,Nếu không phiền, tôi có thể thay anh\Nđi xuống trước xem sao.
Dialogue: 0,0:17:10.24,0:17:13.82,Default,,0,0,0,,Anh sợ lại dụ\NNgười Gõ Cửa khác đến đúng không?
Dialogue: 0,0:17:13.91,0:17:15.95,Default,,0,0,0,,Tôi đã nghe nói việc này rồi.
Dialogue: 0,0:17:16.03,0:17:17.28,Default,,0,0,0,,Vậy được không?
Dialogue: 0,0:17:17.37,0:17:18.91,Default,,0,0,0,,Tôi sẽ hỗ trợ anh mà.
Dialogue: 0,0:17:18.99,0:17:21.20,Default,,0,0,0,,Đây chính là công việc của Đoàn Hộ Vệ.
Dialogue: 0,0:17:21.29,0:17:23.42,Default,,0,0,0,,Xin hãy ở đây đợi tôi nhé.
Dialogue: 0,0:17:23.50,0:17:25.54,Default,,0,0,0,,Nếu nhanh thì buổi tối là về thôi.
Dialogue: 0,0:17:26.50,0:17:27.38,Default,,0,0,0,,Cảm ơn nhé.
Dialogue: 0,0:17:28.84,0:17:29.71,Default,,0,0,0,,Vâng.
Dialogue: 0,0:17:33.63,0:17:34.97,Default,,0,0,0,,{\i1}Lâu quá.{\i0}
Dialogue: 0,0:17:35.05,0:17:38.47,Default,,0,0,0,,{\i1}Chẳng lẽ tình hình trong thôn\Ncòn thảm hơn dự đoán ư?{\i0}
Dialogue: 0,0:17:38.56,0:17:41.43,Default,,0,0,0,,{\i1}Quá muộn rồi, đã có người chết rồi.{\i0}
Dialogue: 0,0:17:44.60,0:17:45.90,Default,,0,0,0,,{\i1}Điếc tai quá.{\i0}
Dialogue: 0,0:17:48.44,0:17:50.57,Default,,0,0,0,,Này anh kia,
Dialogue: 0,0:17:50.65,0:17:53.90,Default,,0,0,0,,anh đặc biệt đến thăm\Nthôn làng bị tấn công à?
Dialogue: 0,0:17:53.99,0:17:55.03,Default,,0,0,0,,Không, tôi…
Dialogue: 0,0:17:55.11,0:17:57.74,Default,,0,0,0,,Tụi tôi cũng vậy,\Nđúng là khiến người ta lo lắng.
Dialogue: 0,0:17:57.82,0:18:02.00,Default,,0,0,0,,Chúng tôi đến thôn để chi viện,\Nvừa hay xử lý được một đoạn.
Dialogue: 0,0:18:02.08,0:18:06.04,Default,,0,0,0,,Chỗ này rất gần nghĩa trang,\Nnghe nói hài cốt sẽ từ dưới đất chui lên.
Dialogue: 0,0:18:06.12,0:18:10.13,Default,,0,0,0,,Có điều mọi người đều đi lánh nạn rồi,\Ntrong thôn chỉ còn vài người thôi.
Dialogue: 0,0:18:10.21,0:18:11.13,Default,,0,0,0,,Thương vong thế nào?
Dialogue: 0,0:18:11.21,0:18:14.34,Default,,0,0,0,,Chết 6 người, bị thương 33 người.
Dialogue: 0,0:18:16.97,0:18:18.85,Default,,0,0,0,,Anh đến lúc nào vậy?
Dialogue: 0,0:18:18.93,0:18:19.89,Default,,0,0,0,,Sáng nay.
Dialogue: 0,0:18:19.97,0:18:21.14,Default,,0,0,0,,Thế thì kỳ lạ quá.
Dialogue: 0,0:18:21.22,0:18:24.60,Default,,0,0,0,,Chẳng phải Người Gõ Cửa đến tìm Fushi ư?
Dialogue: 0,0:18:24.68,0:18:25.77,Default,,0,0,0,,Cô biết tôi là ai sao?
Dialogue: 0,0:18:25.85,0:18:28.73,Default,,0,0,0,,"Người bất tử có mái tóc trắng",\Nanh nổi tiếng lắm đấy.
Dialogue: 0,0:18:28.81,0:18:29.65,Default,,0,0,0,,Không biết à?
Dialogue: 0,0:18:29.73,0:18:31.69,Default,,0,0,0,,Đâu đâu cũng có lời đồn về anh.
Dialogue: 0,0:18:31.78,0:18:35.36,Default,,0,0,0,,Không phải chứ,\Nlâu nay tôi đều sống một mình mà.
Dialogue: 0,0:18:36.32,0:18:40.41,Default,,0,0,0,,Tôi nhớ là hình như có một cô bé\Nngốc nghếch tuyên truyền về anh khắp nơi.
Dialogue: 0,0:18:41.08,0:18:42.87,Default,,0,0,0,,Còn có đám người của Đoàn Hộ Vệ nữa,
Dialogue: 0,0:18:42.95,0:18:45.04,Default,,0,0,0,,bọn họ là tín đồ trung thành của anh đấy.
Dialogue: 0,0:18:45.12,0:18:48.88,Default,,0,0,0,,Vì để tăng thêm tín đồ mà ngày nào\Ncũng thảo luận về anh trên phố.
Dialogue: 0,0:18:49.46,0:18:51.17,Default,,0,0,0,,Tốt nhất anh nên đề phòng một chút.
Dialogue: 0,0:18:51.25,0:18:53.09,Default,,0,0,0,,Bọn họ chỉ muốn chiếm hữu anh thôi.
Dialogue: 0,0:18:53.17,0:18:54.01,Default,,0,0,0,,Tôi nghe thấy đấy.
Dialogue: 0,0:18:54.09,0:18:56.88,Default,,0,0,0,,Chẳng lẽ cô là…
Dialogue: 0,0:18:56.97,0:18:58.84,Default,,0,0,0,,Tôi không cho phép ai nói xấu Đoàn Hộ Vệ.
Dialogue: 0,0:18:59.43,0:19:01.01,Default,,0,0,0,,Các người là ai hả?
Dialogue: 0,0:19:01.10,0:19:04.77,Default,,0,0,0,,Tôi là thầy thuốc, phụ trách chữa trị\Ncho người bị thương trong thôn.
Dialogue: 0,0:19:04.85,0:19:06.81,Default,,0,0,0,,Thì ra là vậy, anh vất vả rồi.
Dialogue: 0,0:19:06.89,0:19:09.56,Default,,0,0,0,,- Xin hỏi…\N- Tôi đã nói chuyện với trưởng thôn,
Dialogue: 0,0:19:09.65,0:19:12.65,Default,,0,0,0,,người đó nói mời anh ghé thăm,\Ntối nay hãy ở lại đó nhé.
Dialogue: 0,0:19:12.73,0:19:15.61,Default,,0,0,0,,Vừa hay chúng ta hãy cùng ăn tối nhé.
Dialogue: 0,0:19:16.49,0:19:18.95,Default,,0,0,0,,{\i1}Thật ngại quá, còn để mọi người mời.{\i0}
Dialogue: 0,0:19:19.03,0:19:23.58,Default,,0,0,0,,Nếu có thể khiến anh chị thích bọn tôi\Nthì mời bao nhiêu lần cũng được.
Dialogue: 0,0:19:24.45,0:19:27.58,Default,,0,0,0,,Phải làm sao đây?\NMọi người đã có rất nhiều tín đồ rồi nhỉ?
Dialogue: 0,0:19:27.66,0:19:29.42,Default,,0,0,0,,Phải, nhờ phúc của mọi người,
Dialogue: 0,0:19:29.50,0:19:32.84,Default,,0,0,0,,bốn mươi năm nay đã chiêu mộ được\Nngười ủng hộ gần bằng số dân một nước rồi.
Dialogue: 0,0:19:32.92,0:19:37.47,Default,,0,0,0,,Nhưng hy vọng có thêm nhiều người\Nbiết và đồng tình với chúng tôi.
Dialogue: 0,0:19:37.55,0:19:40.26,Default,,0,0,0,,Vậy sao? Theo tôi thấy
Dialogue: 0,0:19:40.34,0:19:43.81,Default,,0,0,0,,các người chỉ là một nhóm\Ncho rằng "Fushi là của bọn ta" thôi.
Dialogue: 0,0:19:44.68,0:19:46.27,Default,,0,0,0,,Chị hiểu lầm rồi.
Dialogue: 0,0:19:46.35,0:19:50.65,Default,,0,0,0,,Vì Người Gõ Cửa\Nmà anh ấy sống trên đảo 40 năm.
Dialogue: 0,0:19:50.73,0:19:53.02,Default,,0,0,0,,Chúng tôi muốn giải thoát\Nanh ấy khỏi nhà tù tâm lý
Dialogue: 0,0:19:53.11,0:19:55.98,Default,,0,0,0,,và tạo ra một nơi để anh ấy sống yên ổn.
Dialogue: 0,0:19:56.74,0:19:58.15,Default,,0,0,0,,Nhưng trên thực tế,
Dialogue: 0,0:19:58.24,0:20:01.53,Default,,0,0,0,,hành vi mà các người thực hiện\Nchỉ là hai lần bắt Fushi,
Dialogue: 0,0:20:01.62,0:20:04.28,Default,,0,0,0,,nhưng hai lần anh ta đều thoát\Nnên cảm thấy bực tức chứ gì.
Dialogue: 0,0:20:04.37,0:20:06.37,Default,,0,0,0,,Chị khá hiểu về chuyện trước đây nhỉ.
Dialogue: 0,0:20:06.45,0:20:08.00,Default,,0,0,0,,Thay vì bắt giữ, chúng tôi bảo vệ.
Dialogue: 0,0:20:08.58,0:20:10.71,Default,,0,0,0,,Bảo vệ anh ấy khỏi bị\Nnhững kẻ lạ tấn công.
Dialogue: 0,0:20:10.79,0:20:14.00,Default,,0,0,0,,Và bảo vệ người dân\Ntránh xa nhân vật kỳ lạ như anh ấy.
Dialogue: 0,0:20:14.09,0:20:16.25,Default,,0,0,0,,Đây là hai nhiệm vụ\Nquan trọng của chúng tôi.
Dialogue: 0,0:20:17.76,0:20:22.55,Default,,0,0,0,,Nên đến giờ cũng không có người lớn nào\Nở bên cạnh bảo vệ cô cả.
Dialogue: 0,0:20:22.64,0:20:24.51,Default,,0,0,0,,Xin đừng nhắc đến việc không liên quan.
Dialogue: 0,0:20:24.60,0:20:26.26,Default,,0,0,0,,Xin ngắt lời một chút.
Dialogue: 0,0:20:26.35,0:20:28.81,Default,,0,0,0,,Những chuyện này với tôi\Nđều không quan trọng.
Dialogue: 0,0:20:28.89,0:20:30.06,Default,,0,0,0,,Chuyện quá khứ cũng vậy.
Dialogue: 0,0:20:30.14,0:20:32.15,Default,,0,0,0,,Ít nhất là bây giờ tôi cho rằng như vậy.
Dialogue: 0,0:20:32.23,0:20:33.48,Default,,0,0,0,,Phải rồi, thầy thuốc.
Dialogue: 0,0:20:34.31,0:20:35.94,Default,,0,0,0,,Làm phiền anh lấy cục bướu này ra.
Dialogue: 0,0:20:37.36,0:20:39.28,Default,,0,0,0,,Nó… còn sống sao?
Dialogue: 0,0:20:39.36,0:20:41.66,Default,,0,0,0,,Vậy mà cô vẫn sống được sao Hisame?
Dialogue: 0,0:20:43.16,0:20:44.87,Default,,0,0,0,,Tôi hơi khát rồi.
Dialogue: 0,0:20:45.45,0:20:46.45,Default,,0,0,0,,Cần pha trà không ạ?
Dialogue: 0,0:20:46.53,0:20:49.54,Default,,0,0,0,,Được, pha thêm cho họ một ly nữa.
Dialogue: 0,0:20:49.62,0:20:50.50,Default,,0,0,0,,Vâng.
Dialogue: 0,0:20:55.84,0:20:59.71,Default,,0,0,0,,Này Fushi, anh đã bao giờ nghe nói\Nvề dơi một cánh chưa?
Dialogue: 0,0:20:59.80,0:21:00.63,Default,,0,0,0,,Chưa.
Dialogue: 0,0:21:00.72,0:21:03.97,Default,,0,0,0,,Trước đây có người\Nkhông biết nó có độc nên bắt để ăn.
Dialogue: 0,0:21:04.05,0:21:07.60,Default,,0,0,0,,- Còn tôi thì ngu xuẩn muốn tự xác thực.\N- Cảm ơn.
Dialogue: 0,0:21:07.68,0:21:10.73,Default,,0,0,0,,Đầu tiên tôi nuốt\Nmột lượng nhỏ như hạt cát,
Dialogue: 0,0:21:12.64,0:21:15.90,Default,,0,0,0,,kết quả là bị nôn mửa và đau bụng dữ dội,\Ntưởng là mình chết chắc rồi.
Dialogue: 0,0:21:15.98,0:21:20.78,Default,,0,0,0,,Nhưng cứ hai ngày thử một lần\Nthì không xảy ra chuyện gì nữa.
Dialogue: 0,0:21:21.44,0:21:23.53,Default,,0,0,0,,Sau đó tôi đã cắn hẳn một miếng,
Dialogue: 0,0:21:23.61,0:21:25.53,Default,,0,0,0,,lại suýt chết như lần trước.
Dialogue: 0,0:21:25.62,0:21:27.83,Default,,0,0,0,,Nhưng tôi tiếp tục ăn liền một tháng.
Dialogue: 0,0:21:29.33,0:21:31.54,Default,,0,0,0,,Lần này tôi đã ăn hẳn một con
Dialogue: 0,0:21:31.62,0:21:33.33,Default,,0,0,0,,lại cũng suýt chết như lần trước.
Dialogue: 0,0:21:33.42,0:21:35.50,Default,,0,0,0,,Sau đó tôi lại tiếp tục ăn liền một tháng.
Dialogue: 0,0:21:35.58,0:21:37.79,Default,,0,0,0,,Sau đó cô vẫn không sao ư?
Dialogue: 0,0:21:41.80,0:21:44.01,Default,,0,0,0,,Hoa Khiên Ngưu ở phía Tây à…
Dialogue: 0,0:21:44.09,0:21:45.68,Default,,0,0,0,,Mùi vị làm người ta hoài niệm đấy.
Dialogue: 0,0:21:46.72,0:21:48.14,Default,,0,0,0,,Cho thêm ly nữa được không?
Dialogue: 0,0:21:53.81,0:21:57.36,Default,,0,0,0,,Trừ dơi một cánh, tôi còn tò mò\Nthử thêm nhiều thuốc độc nữa.
Dialogue: 0,0:21:57.94,0:22:00.53,Default,,0,0,0,,Tinh trùng ếch, rắn hổ biển,\Ncủ cải turnip độc.
Dialogue: 0,0:22:00.61,0:22:03.40,Default,,0,0,0,,Bốn mươi năm nay cơ thể tôi\Nđã hấp thụ đủ mọi độc tố.
Dialogue: 0,0:22:03.49,0:22:06.28,Default,,0,0,0,,Từ nãy đến giờ chị đang nói cái gì vậy?
Dialogue: 0,0:22:06.36,0:22:09.08,Default,,0,0,0,,Cô nghĩ tại sao tôi lại phải làm vậy chứ.
Dialogue: 0,0:22:09.16,0:22:11.58,Default,,0,0,0,,Bởi vì tôi nhớ ra một chuyện cũ.
Dialogue: 0,0:22:11.66,0:22:14.25,Default,,0,0,0,,Chúng tôi đã từng bị bỏ thuốc mấy lần rồi.
Dialogue: 0,0:22:14.33,0:22:15.46,Default,,0,0,0,,Xin mời.
Dialogue: 0,0:22:15.54,0:22:19.29,Default,,0,0,0,,Nhưng mà lần nào cũng chỉ có tôi\Nlà tỉnh lại rất nhanh.
Dialogue: 0,0:22:27.14,0:22:28.39,Default,,0,0,0,,Đây là…
Dialogue: 0,0:22:28.47,0:22:30.01,Default,,0,0,0,,trà được ủ từ hoa sen độc.
Dialogue: 0,0:22:30.68,0:22:34.60,Default,,0,0,0,,Chỉ 30 giây là sẽ bắt đầu mê sảng,\Ntrong vài phút sẽ mất mạng.
Dialogue: 0,0:22:34.68,0:22:38.10,Default,,0,0,0,,Nó là thuốc độc thường được Takunaha dùng\Nkhi tàn sát người Yanome.
Dialogue: 0,0:22:38.19,0:22:40.86,Default,,0,0,0,,Tôi cũng đã từng được tiêm rồi.
Dialogue: 0,0:22:41.57,0:22:44.11,Default,,0,0,0,,Cũng gần 30 giây rồi đấy.
Dialogue: 0,0:22:44.19,0:22:45.32,Default,,0,0,0,,Bắt tên này lại!
Dialogue: 0,0:22:47.91,0:22:50.49,Default,,0,0,0,,Người đã từng bị đầu độc
Dialogue: 0,0:22:51.12,0:22:52.99,Default,,0,0,0,,sẽ có khả năng chống độc rất mạnh đấy.
Dialogue: 0,0:22:54.25,0:22:55.58,Default,,0,0,0,,{\i1}Cô là người của Jananda…{\i0}
Dialogue: 0,0:22:58.12,0:22:59.46,Default,,0,0,0,,Tonari ư?
Dialogue: 0,0:24:33.01,0:24:35.05,Default,,0,0,0,,GIỚI THIỆU TẬP SAU
Dialogue: 0,0:24:35.14,0:24:37.85,Default,,0,0,0,,{\i1}Trải qua thời gian 40 năm{\i0}
Dialogue: 0,0:24:37.93,0:24:40.19,Default,,0,0,0,,{\i1}bánh xe vận mệnh lại lần nữa chuyển động.{\i0}
Dialogue: 0,0:24:41.14,0:24:43.61,Default,,0,0,0,,{\i1}Mục tiêu của Hisame là Fushi.{\i0}
Dialogue: 0,0:24:43.69,0:24:46.15,Default,,0,0,0,,{\i1}Tonari của Jananda đã ngăn cản cô ta.{\i0}
Dialogue: 0,0:24:47.36,0:24:50.36,Default,,0,0,0,,{\i1}Một lần nữa gặp lại những người bạn cũ,{\i0}
Dialogue: 0,0:24:50.45,0:24:53.87,Default,,0,0,0,,{\i1}Fushi sẽ có được những gì?{\i0}
