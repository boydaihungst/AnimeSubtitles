Dialogue: 0,0:00:01.29,0:00:02.08,Default,,0,0,0,,LỚP A ĐẤU VỚI LỚP B
Dialogue: 0,0:00:02.08,0:00:03.12,Default,,0,0,0,,TRẬN ĐẤU ĐẦU TIÊN
Dialogue: 0,0:00:04.54,0:00:06.45,Default,,0,0,0,,Tại Học viện Anh hùng khoa Anh hùng,
Dialogue: 0,0:00:06.45,0:00:08.50,Default,,0,0,0,,lớp A và lớp B
Dialogue: 0,0:00:08.50,0:00:10.75,Default,,0,0,0,,tham gia huấn luyện chiến đấu theo nhóm.
Dialogue: 0,0:00:15.79,0:00:17.16,Default,,0,0,0,,Trận đấu đầu tiên,
Dialogue: 0,0:00:17.16,0:00:21.50,Default,,0,0,0,,năng lực của Shinso đã đánh bại nhóm của lớp B.
Dialogue: 0,0:00:23.08,0:00:25.25,Default,,0,0,0,,Kết thúc, lớp A chiến thắng.
Dialogue: 0,0:00:33.00,0:00:42.33,Default,,0,0,0,,♫Những ngày không ai có thể bước tiếp,\Nhãy làm trái tim đập mạnh mẽ♫
Dialogue: 0,0:00:42.62,0:00:48.00,Default,,0,0,0,,HỌC VIỆN SIÊU ANH HÙNG
Dialogue: 0,0:00:48.54,0:00:57.91,Default,,0,0,0,,♫Trong thế giới bấp bênh này,\Nthay vì đi tìm câu trả lời chắc chắn♫
Dialogue: 0,0:00:59.25,0:01:08.04,Default,,0,0,0,,♫Tôi lại muốn sống thật tốt,\Ndù không ngừng tự hỏi có phải đã hoài công♫
Dialogue: 0,0:01:09.87,0:01:19.33,Default,,0,0,0,,♫Trút bỏ bộ giáp vô hình, gió thổi lên đôi má♫
Dialogue: 0,0:01:20.45,0:01:30.41,Default,,0,0,0,,♫Để bảo vệ chính mình,\Nkhông cần nói ra cái mình làm được♫
Dialogue: 0,0:01:30.41,0:01:35.87,Default,,0,0,0,,♫Số 1 bay lên chỉ tay về bầu trời phía xa♫
Dialogue: 0,0:01:35.87,0:01:41.83,Default,,0,0,0,,♫Vì muốn ngắm nhìn một nơi\Ncao hơn và xa hơn hiện tại♫
Dialogue: 0,0:01:41.83,0:01:50.91,Default,,0,0,0,,♫Đốt cháy con tim khao khát không ngừng nghỉ♫
Dialogue: 0,0:01:50.91,0:02:00.62,Default,,0,0,0,,♫Đem ta đến tương lai để ước mơ được cháy lên♫
Dialogue: 0,0:02:03.00,0:02:06.50,Default,,0,0,0,,"AIZAWA SHOTA, NĂNG LỰC: TRIỆT TIÊU"\NCần rút kinh nghiệm gì sau trận đầu tiên?
Dialogue: 0,0:02:06.50,0:02:08.75,Default,,0,0,0,,Nếu đối thủ không muốn đánh với em,
Dialogue: 0,0:02:08.75,0:02:11.45,Default,,0,0,0,,thì năng lực của em không có đất dụng võ.
Dialogue: 0,0:02:11.45,0:02:13.20,Default,,0,0,0,,Nếu là chiến đấu thật,
Dialogue: 0,0:02:13.20,0:02:14.04,Default,,0,0,0,,em đã sớm
Dialogue: 0,0:02:14.04,0:02:16.54,Default,,0,0,0,,"KIRISHIMA EIJIRO, NĂNG LỰC: HÓA CỨNG"\Nbị hạ gục lúc bị Shiozaki bắt rồi.
Dialogue: 0,0:02:16.54,0:02:18.50,Default,,0,0,0,,"KODA KOJI, NĂNG LỰC: TIẾNG ĐỘNG VẬT"\NEm phải học cách
Dialogue: 0,0:02:18.50,0:02:20.79,Default,,0,0,0,,ra những lệnh tỉ mỉ hơn cho côn trùng mới được.
Dialogue: 0,0:02:20.79,0:02:22.25,Default,,0,0,0,,"KAMINARI DENKI"\NTôi thể hiện không tệ nhỉ?
Dialogue: 0,0:02:22.25,0:02:24.50,Default,,0,0,0,,Mê tôi rồi? Mê rồi cũng không sao.
Dialogue: 0,0:02:25.87,0:02:29.00,Default,,0,0,0,,Tôi hiểu, yêu đương là không thể kìm nén.
Dialogue: 0,0:02:29.00,0:02:30.83,Default,,0,0,0,,Nên không sao cả.
Dialogue: 0,0:02:30.83,0:02:32.75,Default,,0,0,0,,"ASUI TSUYU, NĂNG LỰC: ẾCH"\NĐể hai đồng đội là
Dialogue: 0,0:02:32.75,0:02:34.95,Default,,0,0,0,,Koda và Kirishima bị bắt.
Dialogue: 0,0:02:34.95,0:02:37.70,Default,,0,0,0,,Vốn dĩ em muốn giành chiến thắng\Nmà không để ai bị bắt,
Dialogue: 0,0:02:37.70,0:02:39.08,Default,,0,0,0,,rốt cuộc lại loạn hết cả lên.
Dialogue: 0,0:02:39.08,0:02:40.08,Default,,0,0,0,,Vải cuốn.
Dialogue: 0,0:02:40.08,0:02:41.20,Default,,0,0,0,,Kero.
Dialogue: 0,0:02:41.20,0:02:44.70,Default,,0,0,0,,Những thứ thầy dạy,\Nem còn không làm được nổi 1/10.
Dialogue: 0,0:02:44.70,0:02:46.50,Default,,0,0,0,,"SHINSO HITOSHI, NĂNG LỰC: TẨY NÃO"\NKhông hài lòng chút nào.
Dialogue: 0,0:02:46.50,0:02:49.04,Default,,0,0,0,,Nếu học được luôn thì đâu phải khổ sở như vậy.
Dialogue: 0,0:02:49.04,0:02:52.58,Default,,0,0,0,,Thầy cũng mất sáu năm\Nmới có thể dễ dàng sử dụng vải cuốn.
Dialogue: 0,0:02:52.58,0:02:55.12,Default,,0,0,0,,Đừng quên chuyện mình không hài lòng,\Nđể không ngừng cố gắng.
Dialogue: 0,0:02:56.58,0:02:57.87,Default,,0,0,0,,Dạ.
Dialogue: 0,0:02:57.87,0:02:59.41,Default,,0,0,0,,"AOYAMA YUGA, NĂNG LỰC: LASER RỐN"\NHai người thực tập làm anh hùng đó,
Dialogue: 0,0:02:59.41,0:03:01.33,Default,,0,0,0,,suy nghĩ thật nghiêm túc.
Dialogue: 0,0:03:01.33,0:03:03.45,Default,,0,0,0,,"SERO HANTA, NĂNG LỰC: BĂNG DÍNH"\NĐương nhiên.
Dialogue: 0,0:03:03.45,0:03:06.20,Default,,0,0,0,,Gì nhỉ, hội Shie Hassaikai phải không?
Dialogue: 0,0:03:06.20,0:03:09.12,Default,,0,0,0,,Nghe nói đánh với chúng chỉ có 10% cơ hội sống.
Dialogue: 0,0:03:09.12,0:03:11.58,Default,,0,0,0,,Họ đã trải qua thực chiến như vậy,
Dialogue: 0,0:03:11.58,0:03:14.33,Default,,0,0,0,,nên cho dù chỉ huấn luyện,
Dialogue: 0,0:03:14.33,0:03:16.70,Default,,0,0,0,,thì tâm thế và động lực cũng đã khác rồi.
Dialogue: 0,0:03:17.62,0:03:19.54,Default,,0,0,0,,So với bọn họ,
Dialogue: 0,0:03:19.54,0:03:23.04,Default,,0,0,0,,thái độ của Jammingway đúng là không giống ai.
Dialogue: 0,0:03:23.54,0:03:24.87,Default,,0,0,0,,Nghe đây.
Dialogue: 0,0:03:24.87,0:03:29.45,Default,,0,0,0,,Kirishima phải biết cách sắp xếp,\Ndụ đối phương đối đầu trực diện với em.
Dialogue: 0,0:03:29.45,0:03:30.33,Default,,0,0,0,,Dạ!
Dialogue: 0,0:03:30.33,0:03:32.20,Default,,0,0,0,,Koda, như em đã nói,
Dialogue: 0,0:03:32.20,0:03:34.87,Default,,0,0,0,,phải nâng cao độ tinh tế\Ncủa năng lực thao túng động vật.
Dialogue: 0,0:03:34.87,0:03:38.20,Default,,0,0,0,,Ngoài nghênh chiến trực diện\Ncũng phải tìm cách đánh úp đối thủ.
Dialogue: 0,0:03:39.16,0:03:41.04,Default,,0,0,0,,Kaminari từ đầu đã quá lơ là.
Dialogue: 0,0:03:41.04,0:03:43.91,Default,,0,0,0,,Phải để đồng đội bị hạ gục\Nthì em mới chịu phát huy thực lực sao?
Dialogue: 0,0:03:43.91,0:03:45.00,Default,,0,0,0,,Dạ...
Dialogue: 0,0:03:45.00,0:03:46.08,Default,,0,0,0,,Asui.
Dialogue: 0,0:03:46.08,0:03:49.87,Default,,0,0,0,,Phải nhớ, phát hiện sai lầm là một chuyện,\Nnhưng quan trọng hơn là sớm học cách sửa sai.
Dialogue: 0,0:03:49.87,0:03:51.04,Default,,0,0,0,,Kero.
Dialogue: 0,0:03:51.04,0:03:53.95,Default,,0,0,0,,Vận dụng những kinh nghiệm có được hôm nay\Nvào những buổi huấn luyện trong tương lai.
Dialogue: 0,0:03:53.95,0:03:54.83,Default,,0,0,0,,Vậy thôi.
Dialogue: 0,0:03:54.83,0:03:56.29,Default,,0,0,0,,Dạ!
Dialogue: 0,0:04:06.87,0:04:11.04,Default,,0,0,0,,Dù đã chiến thắng, nhưng cậu cảm nhận sâu sắc\Nbản thân mình kém thành thục ra sao.
Dialogue: 0,0:04:11.04,0:04:13.16,Default,,0,0,0,,Dù vậy cậu không vì chuyện đó mà nhụt chí,
Dialogue: 0,0:04:13.16,0:04:14.37,Default,,0,0,0,,mà trong đầu lại tính toán,
Dialogue: 0,0:04:14.37,0:04:19.04,Default,,0,0,0,,tìm tòi cách tối ưu hóa chiến lược\Ncho trận đấu sau.
Dialogue: 0,0:04:19.04,0:04:20.54,Default,,0,0,0,,"MIDNIGHT, NĂNG LỰC: HƯƠNG RU NGỦ"\NHay quá!
Dialogue: 0,0:04:20.54,0:04:23.95,Default,,0,0,0,,Sự non nớt của Shinso, thích thật!
Dialogue: 0,0:04:23.95,0:04:25.58,Default,,0,0,0,,"ALL MIGHT, NĂNG LỰC: ONE FOR ALL"\NCô...
Dialogue: 0,0:04:25.58,0:04:26.37,Default,,0,0,0,,VLAD KING, NĂNG LỰC: HÚT MÁU
Dialogue: 0,0:04:26.37,0:04:28.66,Default,,0,0,0,,Chắc các em đã biết...
Dialogue: 0,0:04:28.66,0:04:30.83,Default,,0,0,0,,tại sao mình thua rồi chứ?
Dialogue: 0,0:04:31.75,0:04:34.58,Default,,0,0,0,,"SHISHIDA JUROTA, NĂNG LỰC: BEAST"\NDù để Shishida làm trụ cột,
Dialogue: 0,0:04:34.58,0:04:37.41,Default,,0,0,0,,"SHIOZAKI IBARA, NĂNG LỰC: DÂY LEO"\Nhay để Shiozaki làm trụ cột,
Dialogue: 0,0:04:37.41,0:04:40.87,Default,,0,0,0,,nếu các em phối hợp tốt,\Nthì đã sớm thắng trận này rồi!
Dialogue: 0,0:04:40.87,0:04:43.37,Default,,0,0,0,,Ánh mắt thầy Vlad King đáng sợ quá.
Dialogue: 0,0:04:43.95,0:04:46.62,Default,,0,0,0,,"MONOMA NEITO, NĂNG LỰC: SAO CHÉP"\NShiozaki không biết gài bẫy lừa người.
Dialogue: 0,0:04:46.62,0:04:49.66,Default,,0,0,0,,Shishida, cậu có lường được tình huống\Nphản tác dụng này không?
Dialogue: 0,0:04:49.66,0:04:51.33,Default,,0,0,0,,Monoma...
Dialogue: 0,0:04:51.33,0:04:55.33,Default,,0,0,0,,Với kết quả này, đúng là bọn em\Nđã để đối thủ có thời gian chuẩn bị.
Dialogue: 0,0:04:55.33,0:04:57.50,Default,,0,0,0,,Xin lỗi Shiozaki.
Dialogue: 0,0:04:57.50,0:04:59.25,Default,,0,0,0,,Để nghiệp hỏa thiêu rụi đi.
Dialogue: 0,0:04:59.25,0:05:00.58,Default,,0,0,0,,Có điều,
Dialogue: 0,0:05:00.58,0:05:02.79,Default,,0,0,0,,đúng là tôi đã được xem một trận đấu xuất sắc.
Dialogue: 0,0:05:02.79,0:05:05.12,Default,,0,0,0,,Rất háo hức được chiến đấu cùng cậu ấy.
Dialogue: 0,0:05:05.12,0:05:06.87,Default,,0,0,0,,Này, Shinso!
Dialogue: 0,0:05:06.87,0:05:09.75,Default,,0,0,0,,Chúng ta cùng bàn chiến thuật\Nkhiến lớp A phải khóc ròng đi.
Dialogue: 0,0:05:09.75,0:05:12.20,Default,,0,0,0,,Tốt nhất là làm họ khóc không thành tiếng ấy.
Dialogue: 0,0:05:12.20,0:05:13.79,Default,,0,0,0,,"MINETA MINORU, NĂNG LỰC: Super Grape Rush"\NĐể lớp A phải há hốc không theo kịp.
Dialogue: 0,0:05:13.79,0:05:15.83,Default,,0,0,0,,- Một mình nói đắc chí vậy.\N- Chỉ cần quỳ xuống nhận thua trước lớp B...
Dialogue: 0,0:05:15.83,0:05:18.12,Default,,0,0,0,,Chúng ta cũng phải vạch chiến thuật cẩn thận.
Dialogue: 0,0:05:19.75,0:05:22.95,Default,,0,0,0,,Ta liệt kê hết những điều và những cách\Ncó thể làm đi.
Dialogue: 0,0:05:22.95,0:05:23.70,Default,,0,0,0,,Được.
Dialogue: 0,0:05:23.70,0:05:26.16,Default,,0,0,0,,Lên chiêu combo đi,\Nloại mà một phát xong luôn ấy!
Dialogue: 0,0:05:26.16,0:05:28.29,Default,,0,0,0,,Chúng ta cũng đóng góp ý kiến đi.
Dialogue: 0,0:05:28.29,0:05:30.33,Default,,0,0,0,,Lấy Todoroki làm trụ cột để hành động đi.
Dialogue: 0,0:05:30.33,0:05:31.20,Default,,0,0,0,,Tôi sao?
Dialogue: 0,0:05:31.20,0:05:32.45,Default,,0,0,0,,Được đó.
Dialogue: 0,0:05:32.45,0:05:34.70,Default,,0,0,0,,Bakugo, chúng ta cũng nghĩ chiến thuật đi.
Dialogue: 0,0:05:34.70,0:05:37.54,Default,,0,0,0,,"BAKUGO KATSUKI, NĂNG LỰC: BỘC PHÁ"\NCác cậu đừng làm vướng chân tôi!
Dialogue: 0,0:05:38.33,0:05:39.75,Default,,0,0,0,,Được rồi.
Dialogue: 0,0:05:40.29,0:05:42.54,Default,,0,0,0,,"URARAKA OCHAKO, NĂNG LỰC: VÔ TRỌNG LỰC"\NTrận thứ năm sẽ đấu với Shinso.
Dialogue: 0,0:05:43.70,0:05:45.58,Default,,0,0,0,,"ASHIDO MINA, NĂNG LỰC: AXIT"\NNguy hiểm là ở máy biến giọng của cậu ấy.
Dialogue: 0,0:05:45.58,0:05:48.33,Default,,0,0,0,,Cú đá bay axit dính lơ lửng!
Dialogue: 0,0:05:48.33,0:05:50.00,Default,,0,0,0,,Đó là chiêu gì vậy?
Dialogue: 0,0:05:50.00,0:05:52.37,Default,,0,0,0,,Sân đấu vô cùng phức tạp, rất dễ ẩn trốn.
Dialogue: 0,0:05:52.37,0:05:54.16,Default,,0,0,0,,Như vậy rất dễ tìm kẻ địch.
Dialogue: 0,0:05:54.16,0:05:55.25,Default,,0,0,0,,Cứ để cho tôi.
Dialogue: 0,0:05:55.25,0:05:57.45,Default,,0,0,0,,Để tôi nghĩ, tôi là trụ cột!
Dialogue: 0,0:05:57.45,0:05:59.20,Default,,0,0,0,,Chiến thuật phải để tôi nghĩ!
Dialogue: 0,0:05:59.20,0:06:02.41,Default,,0,0,0,,"OJIRO MASHIRAO, NĂNG LỰC: ĐUÔI"\NLúc khẩn cấp thì để Ida làm át chủ bài đi.
Dialogue: 0,0:06:02.41,0:06:03.41,Default,,0,0,0,,"IDA TENYA, NĂNG LỰC: ENGINE BOOST"\NTrước đó,
Dialogue: 0,0:06:03.41,0:06:06.54,Default,,0,0,0,,tôi muốn cho mọi người biết một chuyện\Nliên quan đến chiêu Recipro của tôi.
Dialogue: 0,0:06:06.54,0:06:08.29,Default,,0,0,0,,Hạ gục ngay lập tức!
Dialogue: 0,0:06:08.29,0:06:10.04,Default,,0,0,0,,Tóm lại đấy là chiêu gì?
Dialogue: 0,0:06:10.04,0:06:12.41,Default,,0,0,0,,- Dùng axit của tôi bọc lấy nho của cậu...\N- Ai bị thương hãy đến phòng y tế.
Dialogue: 0,0:06:12.41,0:06:14.37,Default,,0,0,0,,- từ trên không ném vào đối thủ.\N- Người là thứ hạ đẳng không thể thay linh kiện.
Dialogue: 0,0:06:14.37,0:06:15.87,Default,,0,0,0,,Tốt nhất là có.
Dialogue: 0,0:06:15.87,0:06:18.75,Default,,0,0,0,,Đúng vậy, đúng vậy!
Dialogue: 0,0:06:18.75,0:06:20.41,Default,,0,0,0,,Mùa xuân non nớt của người trẻ.
Dialogue: 0,0:06:20.41,0:06:21.79,Default,,0,0,0,,Giờ là mùa đông mà.
Dialogue: 0,0:06:24.12,0:06:27.33,Default,,0,0,0,,Chớp mắt đã đến cuối năm rồi.
Dialogue: 0,0:06:27.33,0:06:32.33,Default,,0,0,0,,Ai cũng cố gắng phát huy năng lực,\Nđồng thời phát triển chiêu chí mạng của mình.
Dialogue: 0,0:06:32.33,0:06:35.91,Default,,0,0,0,,Midoriya cũng đã nắm được\Ncách sử dụng One For All,
Dialogue: 0,0:06:36.70,0:06:41.25,Default,,0,0,0,,đồng thời học được cách bắn trúng mục tiêu\Nvà dùng vũ lực trong không trung.
Dialogue: 0,0:06:41.25,0:06:43.25,Default,,0,0,0,,Sát hạch chứng nhận tạm thời.
Dialogue: 0,0:06:45.08,0:06:47.41,Default,,0,0,0,,Trận đấu với hội Shie Hassaikai.
Dialogue: 0,0:06:49.75,0:06:51.29,Default,,0,0,0,,Kỷ niệm thành lập trường.
Dialogue: 0,0:06:53.95,0:06:59.87,Default,,0,0,0,,Qua rất nhiều biến cố, rất nhiều gian nan,\Ncác em không ngừng tiến lên phía trước.
Dialogue: 0,0:07:01.20,0:07:06.08,Default,,0,0,0,,Nhân cơ hội này\Ncác em đọ sức với những người khác,
Dialogue: 0,0:07:06.08,0:07:09.08,Default,,0,0,0,,biết được vị trí hiện tại của mình là ở đâu.
Dialogue: 0,0:07:11.25,0:07:14.66,Default,,0,0,0,,Giáo trình lần này về mặt nào đó\Ncó thể coi là thành công lớn.
Dialogue: 0,0:07:16.25,0:07:17.79,Default,,0,0,0,,All Might.
Dialogue: 0,0:07:17.79,0:07:19.62,Default,,0,0,0,,Anh thấy Shinso thể hiện ra sao?
Dialogue: 0,0:07:19.62,0:07:21.75,Default,,0,0,0,,Rất được.
Dialogue: 0,0:07:21.75,0:07:23.45,Default,,0,0,0,,Hơn nữa em ấy không hề mất bình tĩnh,
Dialogue: 0,0:07:24.33,0:07:28.54,Default,,0,0,0,,còn biết thể hiện sự không hài lòng,\Nđiểm này rất đáng khen ngợi.
Dialogue: 0,0:07:28.54,0:07:32.87,Default,,0,0,0,,Buổi huấn luyện này chính là\Nbài thi chuyển khoa trước khi vào khoa Anh hùng.
Dialogue: 0,0:07:32.87,0:07:36.04,Default,,0,0,0,,Tôi tin trận tiếp theo em ấy sẽ chiến đấu\Nvới tinh thần hăng hái gấp bội.
Dialogue: 0,0:07:36.95,0:07:39.58,Default,,0,0,0,,Vlad, bắt đầu trận đấu tiếp theo đi.
Dialogue: 0,0:07:39.58,0:07:40.95,Default,,0,0,0,,Vậy...
Dialogue: 0,0:07:44.66,0:07:46.08,Default,,0,0,0,,Trận đấu thứ hai!
Dialogue: 0,0:07:46.08,0:07:47.95,Default,,0,0,0,,Chuẩn bị ra trận!
Dialogue: 0,0:07:48.41,0:07:50.00,Default,,0,0,0,,TRẬN ĐẤU THỨ HAI
Dialogue: 0,0:07:53.41,0:07:57.41,Default,,0,0,0,,CHIÊU MỚI THÚ VỊ
Dialogue: 0,0:07:58.16,0:07:59.50,Default,,0,0,0,,À phải, Yaoyorozu.
Dialogue: 0,0:07:59.50,0:08:01.20,Default,,0,0,0,,Sao vậy, Kendo?
Dialogue: 0,0:08:01.20,0:08:04.29,Default,,0,0,0,,Sao cậu không thi Hoa khôi học viện\Nđợt kỷ niệm thành lập trường?
Dialogue: 0,0:08:04.29,0:08:06.29,Default,,0,0,0,,Tôi còn tưởng cậu chắc chắn sẽ tham gia chứ.
Dialogue: 0,0:08:06.29,0:08:07.41,Default,,0,0,0,,"YAOYOZORU, NĂNG LỰC: SÁNG TẠO"\NThầy Aizawa
Dialogue: 0,0:08:07.41,0:08:11.00,Default,,0,0,0,,không nói cho tôi là có cuộc thi đó.
Dialogue: 0,0:08:11.00,0:08:14.95,Default,,0,0,0,,Hơn nữa tôi cũng bận luyện nhóm,\Nnên không thể tham gia.
Dialogue: 0,0:08:14.95,0:08:19.33,Default,,0,0,0,,Chắc thầy Aizawa thấy tôi\Nkhông cần tham gia cuộc thi.
Dialogue: 0,0:08:19.33,0:08:21.45,Default,,0,0,0,,KENDO ITSUKA, NĂNG LỰC: ĐẠI QUYỀN
Dialogue: 0,0:08:21.45,0:08:24.62,Default,,0,0,0,,Vì trải nghiệm thực tế\Nnên chúng ta đã cùng quay quảng cáo,
Dialogue: 0,0:08:24.62,0:08:28.66,Default,,0,0,0,,nên có vẻ chúng ta hay bị ghép cùng nhau rồi,
Dialogue: 0,0:08:28.66,0:08:31.50,Default,,0,0,0,,giống như "ấn hộp" vậy.
Dialogue: 0,0:08:31.50,0:08:33.25,Default,,0,0,0,,"Ấn hộp"?
Dialogue: 0,0:08:34.50,0:08:35.95,Default,,0,0,0,,"Ấn hộp" tức là
Dialogue: 0,0:08:35.95,0:08:38.95,Default,,0,0,0,,cái này cũng được, cái kia cũng tốt,\Ncái gì cũng thích.
Dialogue: 0,0:08:38.95,0:08:40.66,Default,,0,0,0,,"HAGAKURE TORU, NĂNG LỰC: TÀNG HÌNH"\NĐợt kỷ niệm thành lập trường rất nhiều người hô
Dialogue: 0,0:08:40.66,0:08:45.08,Default,,0,0,0,,"Yaoyozoru - Kendo" mà?
Dialogue: 0,0:08:45.08,0:08:46.75,Default,,0,0,0,,Đúng là như vậy.
Dialogue: 0,0:08:46.75,0:08:50.00,Default,,0,0,0,,Idol. Sùng bái thần tượng.
Dialogue: 0,0:08:50.00,0:08:51.79,Default,,0,0,0,,Phải nói sao đây?
Dialogue: 0,0:08:51.79,0:08:56.62,Default,,0,0,0,,Thành tích và năng lực của Yaoyorozu rõ ràng\Nđều hơn tôi, mà lại hay bị so với tôi.
Dialogue: 0,0:08:56.62,0:08:58.95,Default,,0,0,0,,Thật ra tôi không thích cảm giác này lắm.
Dialogue: 0,0:08:58.95,0:09:02.29,Default,,0,0,0,,Về phần tôi, trước giờ tôi vẫn muốn\Nđánh một trận đã đời với cậu.
Dialogue: 0,0:09:03.79,0:09:06.00,Default,,0,0,0,,Vậy thì tôi sẽ thành tâm...
Dialogue: 0,0:09:06.00,0:09:07.54,Default,,0,0,0,,nhận lời thách đấu của cậu.
Dialogue: 0,0:09:08.41,0:09:10.00,Default,,0,0,0,,Tokoyami.
Dialogue: 0,0:09:10.00,0:09:11.58,Default,,0,0,0,,Tôi và cậu...
Dialogue: 0,0:09:11.58,0:09:13.79,Default,,0,0,0,,là cùng một loại người.
Dialogue: 0,0:09:13.79,0:09:16.08,Default,,0,0,0,,Kuroiro Shihai.
Dialogue: 0,0:09:16.08,0:09:18.20,Default,,0,0,0,,Năng lực của cậu là có thể hòa vào bóng đen,
Dialogue: 0,0:09:18.20,0:09:21.75,Default,,0,0,0,,còn có thể tùy ý di chuyển trong bóng đen,\Nphải không?
Dialogue: 0,0:09:23.87,0:09:28.50,Default,,0,0,0,,Tôi với cậu... là duyên phận.
Dialogue: 0,0:09:30.00,0:09:32.95,Default,,0,0,0,,Xem ra cậu cũng là người hiểu vực sâu là gì.
Dialogue: 0,0:09:32.95,0:09:35.20,Default,,0,0,0,,Sống trong bóng đen vĩnh hằng.
Dialogue: 0,0:09:36.16,0:09:38.50,Default,,0,0,0,,Hai người họ chẳng tỏa sáng chút nào.
Dialogue: 0,0:09:39.87,0:09:43.12,Default,,0,0,0,,Đội hình hai bên đã chuẩn bị xong.
Dialogue: 0,0:09:43.87,0:09:45.54,Default,,0,0,0,,Vậy...
Dialogue: 0,0:09:46.41,0:09:48.16,Default,,0,0,0,,Cố lên, đội Kendo!
Dialogue: 0,0:09:48.16,0:09:50.16,Default,,0,0,0,,Trận đấu thứ hai, bắt đầu!
Dialogue: 0,0:09:50.16,0:09:52.12,Default,,0,0,0,,PHẢN ĐỐI TRUYỀN BÁ THIÊN VỊ\NNgừng trực tiếp truyền bá thiên vị!
Dialogue: 0,0:09:52.12,0:09:53.79,Default,,0,0,0,,Đừng như vậy!
Dialogue: 0,0:09:54.12,0:09:56.25,Default,,0,0,0,,Tốt. Ta lên thôi!
Dialogue: 0,0:09:56.25,0:09:57.62,Default,,0,0,0,,Được!
Dialogue: 0,0:09:58.50,0:10:01.95,Default,,0,0,0,,Vị trí của Kendo ở lớp B rốt cuộc là gì?
Dialogue: 0,0:10:01.95,0:10:03.70,Default,,0,0,0,,Kendo rất lợi hại đó!
Dialogue: 0,0:10:03.70,0:10:05.33,Default,,0,0,0,,Nói to vậy?
Dialogue: 0,0:10:05.33,0:10:07.62,Default,,0,0,0,,"TETSUTETSU TETSUTETSU, NĂNG LỰC: STEEL"\NDù sao cậu ấy cũng là lớp trưởng lớp tôi mà!
Dialogue: 0,0:10:07.62,0:10:11.20,Default,,0,0,0,,Đầu óc cậu ấy rất linh hoạt, còn có thể kịp thời\Nđưa ra những phán đoán bình tĩnh,
Dialogue: 0,0:10:11.20,0:10:14.79,Default,,0,0,0,,còn dũng cảm sẵn sàng gánh vác trách nhiệm\Ntrong lúc cấp bách,
Dialogue: 0,0:10:14.79,0:10:18.16,Default,,0,0,0,,phong thái có thể chỉnh đốn cả lớp.
Dialogue: 0,0:10:18.16,0:10:19.08,Default,,0,0,0,,Không có cậu ấy,
Dialogue: 0,0:10:19.08,0:10:22.25,Default,,0,0,0,,lớp B đã sớm bị Monoma lôi kéo rồi.
Dialogue: 0,0:10:22.25,0:10:23.83,Default,,0,0,0,,Này, sao lại nói vậy?
Dialogue: 0,0:10:23.83,0:10:25.29,Default,,0,0,0,,Chị đại của lớp B,
Dialogue: 0,0:10:25.29,0:10:28.75,Default,,0,0,0,,chính là cô gái ấy, Kendo Itsuka!
Dialogue: 0,0:10:29.58,0:10:31.12,Default,,0,0,0,,Thủ thuật của Yaoyozuru rốt cuộc có thể
Dialogue: 0,0:10:31.12,0:10:33.04,Default,,0,0,0,,"TODOROKI SHOTO, NĂNG LỰC: NỬA NHIỆT NỬA BĂNG"\Nsử dụng thuận lợi trong trận này không?
Dialogue: 0,0:10:33.04,0:10:34.20,Default,,0,0,0,,Thủ thuật gì?
Dialogue: 0,0:10:35.33,0:10:38.04,Default,,0,0,0,,Vậy thì cứ theo dự tính,\Nphiền cậu đi dò đường trước.
Dialogue: 0,0:10:38.04,0:10:39.20,Default,,0,0,0,,Tokoyaki.
Dialogue: 0,0:10:39.20,0:10:40.16,Default,,0,0,0,,Tuân lệnh.
Dialogue: 0,0:10:40.16,0:10:41.20,Default,,0,0,0,,Dark Shadow.
Dialogue: 0,0:10:41.20,0:10:42.66,Default,,0,0,0,,Biết rồi.
Dialogue: 0,0:10:42.66,0:10:44.41,Default,,0,0,0,,Phát hiện ra đối thủ là lập tức báo về.
Dialogue: 0,0:10:44.41,0:10:45.75,Default,,0,0,0,,Cứ để tôi!
Dialogue: 0,0:10:52.87,0:10:55.45,Default,,0,0,0,,Dù về cơ bản ta đều nắm được\Nnăng lực của đối phương,
Dialogue: 0,0:10:55.45,0:10:58.45,Default,,0,0,0,,nhưng ta không biết gì về những năng lực\Nđã phát triển hoặc những chiêu thức mới,
Dialogue: 0,0:10:58.45,0:11:00.87,Default,,0,0,0,,và rất có thể sẽ bại trận vì lý do đó.
Dialogue: 0,0:11:00.87,0:11:02.50,Default,,0,0,0,,Vì vậy đầu tiên...
Dialogue: 0,0:11:03.54,0:11:05.62,Default,,0,0,0,,phải xem tình hình trước đã.
Dialogue: 0,0:11:07.29,0:11:09.45,Default,,0,0,0,,Dark Shadow hình như đã phát hiện ra\Nhành tung của đối thủ rồi.
Dialogue: 0,0:11:10.29,0:11:12.25,Default,,0,0,0,,Ở bên dưới phía trước cái ống khói đó.
Dialogue: 0,0:11:12.25,0:11:13.66,Default,,0,0,0,,Ta qua đó đi.
Dialogue: 0,0:11:15.00,0:11:19.37,Default,,0,0,0,,Xem tình hình, xem cho rõ đi!
Dialogue: 0,0:11:19.37,0:11:22.16,Default,,0,0,0,,Nhân lúc này giải quyết kẻ dễ đối phó đi.
Dialogue: 0,0:11:22.16,0:11:23.41,Default,,0,0,0,,Nhờ cậu đó.
Dialogue: 0,0:11:23.41,0:11:24.54,Default,,0,0,0,,Kuroiro!
Dialogue: 0,0:11:29.08,0:11:31.20,Default,,0,0,0,,Tôi đi rồi về ngay.
Dialogue: 0,0:11:33.12,0:11:37.29,Default,,0,0,0,,Dark Shadow hình như đã đến chỗ rất xa rồi.
Dialogue: 0,0:11:37.29,0:11:40.25,Default,,0,0,0,,Có phải trong thời gian cậu đi thực tập\Nđã tăng sức mạnh rồi?
Dialogue: 0,0:11:40.25,0:11:41.66,Default,,0,0,0,,Cái này rất khó nói.
Dialogue: 0,0:11:41.66,0:11:45.12,Default,,0,0,0,,Ở càng xa, thời gian Dark Shadow kéo dài được\Ncàng rút ngắn.
Dialogue: 0,0:11:45.12,0:11:46.33,Default,,0,0,0,,Cậu ấy quay về rồi.
Dialogue: 0,0:11:50.04,0:11:51.58,Default,,0,0,0,,Các cậu, mau tránh ra!
Dialogue: 0,0:11:51.58,0:11:53.25,Default,,0,0,0,,Tokoyami!
Dialogue: 0,0:11:53.25,0:11:55.08,Default,,0,0,0,,Sao sao? Chuyện gì đây?
Dialogue: 0,0:11:56.25,0:11:57.83,Default,,0,0,0,,Fumikage...
Dialogue: 0,0:11:57.83,0:12:01.25,Default,,0,0,0,,Tôi... tôi trúng kế rồi!
Dialogue: 0,0:12:03.16,0:12:05.12,Default,,0,0,0,,Dark Shadow bị làm sao vậy?
Dialogue: 0,0:12:05.12,0:12:06.25,Default,,0,0,0,,Mất kiểm soát rồi?
Dialogue: 0,0:12:06.25,0:12:07.54,Default,,0,0,0,,Không đúng.
Dialogue: 0,0:12:07.54,0:12:11.29,Default,,0,0,0,,Sân đấu đâu tối tới mức\NTokoyami không không chế được?
Dialogue: 0,0:12:11.29,0:12:14.16,Default,,0,0,0,,Lẽ nào cậu ấy bị thao túng rồi?
Dialogue: 0,0:12:14.16,0:12:16.45,Default,,0,0,0,,Do một năng lực nào đó bên lớp B?
Dialogue: 0,0:12:18.95,0:12:21.58,Default,,0,0,0,,Chờ đã... Chờ đã...
Dialogue: 0,0:12:23.91,0:12:25.79,Default,,0,0,0,,Hagakure, bắn tia đi!
Dialogue: 0,0:12:25.79,0:12:27.04,Default,,0,0,0,,Biết rồi!
Dialogue: 0,0:12:27.04,0:12:28.70,Default,,0,0,0,,Khúc xạ quang!
Dialogue: 0,0:12:28.70,0:12:30.70,Default,,0,0,0,,Nào, cười cái nào!
Dialogue: 0,0:12:35.75,0:12:38.75,Default,,0,0,0,,Mau quay lại, Dark Shadow!
Dialogue: 0,0:12:39.83,0:12:42.87,Default,,0,0,0,,Kuroiro chạy ra từ người Dark Shadow rồi!
Dialogue: 0,0:12:48.79,0:12:49.83,Default,,0,0,0,,Biến mất tiêu rồi.
Dialogue: 0,0:12:49.83,0:12:52.25,Default,,0,0,0,,Cậu ta tan vào trong bóng đen rồi.
Dialogue: 0,0:12:52.25,0:12:54.37,Default,,0,0,0,,Kuroiro kia kìa.
Dialogue: 0,0:12:56.54,0:12:58.45,Default,,0,0,0,,Kuroiro Shihai, lớp B.
Dialogue: 0,0:12:58.45,0:13:00.08,Default,,0,0,0,,Năng lực là bóng đen.
Dialogue: 0,0:13:00.08,0:13:02.08,Default,,0,0,0,,Có thể tan vào bóng đen,
Dialogue: 0,0:13:02.08,0:13:06.87,Default,,0,0,0,,hơn nữa sau khi phát triển năng lực, cậu có thể\Nthao túng những vật màu đen mình nhập vào,
Dialogue: 0,0:13:06.87,0:13:09.45,Default,,0,0,0,,nhưng chỉ có thể làm vậy\Nvới những thứ có thể di chuyển.
Dialogue: 0,0:13:10.62,0:13:13.75,Default,,0,0,0,,Tokoyami Fumikage.
Dialogue: 0,0:13:13.75,0:13:16.83,Default,,0,0,0,,Tôi sẽ xuyên thủng cậu.
Dialogue: 0,0:13:18.79,0:13:22.20,Default,,0,0,0,,Duyên phận giữa cậu và tôi.
Dialogue: 0,0:13:22.20,0:13:25.04,Default,,0,0,0,,Hóa ra là vậy, kẻ thù truyền kiếp.
Dialogue: 0,0:13:25.04,0:13:26.79,Default,,0,0,0,,Được thôi.
Dialogue: 0,0:13:26.79,0:13:29.08,Default,,0,0,0,,Tôi sẽ dùng chiêu thức được tạo ra\Nhồi tôi đi theo Hawks để nghênh chiến,
Dialogue: 0,0:13:29.08,0:13:32.04,Default,,0,0,0,,gọi là "Thiên thần đen sa ngã".
Dialogue: 0,0:13:32.04,0:13:34.25,Default,,0,0,0,,Thiên thần sa ngã...
Dialogue: 0,0:13:34.25,0:13:36.00,Default,,0,0,0,,Không sai.
Dialogue: 0,0:13:36.00,0:13:38.00,Default,,0,0,0,,Thiên thần đen sa ngã.
Dialogue: 0,0:13:41.00,0:13:42.00,Default,,0,0,0,,TOKOYAMI FUMIKAGE, NĂNG LỰC: DARK SHADOW
Dialogue: 0,0:13:42.00,0:13:43.00,Default,,0,0,0,,TRONG CƠ THỂ CÓ MỘT QUÁI VẬT\NCÓ THỂ CÙNG CHIẾN ĐẤU, DI CHUYỂN NHƯ CÁI BÓNG
Dialogue: 0,0:13:43.00,0:13:44.00,Default,,0,0,0,,THUỘC LỚP 1-A HỌC VIỆN ANH HÙNG\NSINH NHẬT: 30/10
Dialogue: 0,0:13:44.00,0:13:45.00,Default,,0,0,0,,CAO: 158 CM, NHÓM MÁU: AB\NTHỨ ƯA THÍCH: TÁO
Dialogue: 0,0:13:45.00,0:13:46.00,Default,,0,0,0,,HAWKS, NĂNG LỰC: CÁNH CỨNG
Dialogue: 0,0:13:46.00,0:13:47.00,Default,,0,0,0,,CÓ THỂ TÙY Ý ĐIỀU KHIỂN LÔNG VŨ TRÊN LƯNG,\NLÀM NÓ THAY ĐỔI TRẠNG THÁI HOẶC BẮN RA
Dialogue: 0,0:13:47.00,0:13:48.00,Default,,0,0,0,,ANH HÙNG CHUYÊN NGHIỆP\NSINH NHẬT: 28/12, CAO: 172 CM
Dialogue: 0,0:13:48.00,0:13:49.00,Default,,0,0,0,,THỨ ƯA THÍCH: THỊT GÀ
Dialogue: 0,0:13:49.00,0:13:51.95,Default,,0,0,0,,VÀI THÁNG TRƯỚC, KHU KYUSHU
Dialogue: 0,0:13:51.95,0:13:54.41,Default,,0,0,0,,Anh ấy vốn luôn một mình giải quyết mọi việc.
Dialogue: 0,0:13:57.12,0:14:00.41,Default,,0,0,0,,Đây không phải kim cương nhân tạo,\Nlà kim cương tự nhiên.
Dialogue: 0,0:14:00.41,0:14:02.66,Default,,0,0,0,,Lấy nhiều như vậy,\Nnhất định phải được 300 triệu…
Dialogue: 0,0:14:06.45,0:14:07.79,Default,,0,0,0,,"HAWKS, NĂNG LỰC: CÁNH CỨNG"\NRồi, bắt được anh rồi.
Dialogue: 0,0:14:07.79,0:14:09.70,Default,,0,0,0,,Hawks... Hawks!
Dialogue: 0,0:14:11.58,0:14:13.58,Default,,0,0,0,,Các cậu chậm chạp quá.
Dialogue: 0,0:14:13.58,0:14:16.41,Default,,0,0,0,,Hình như có người đang gây sự ở quán rượu.
Dialogue: 0,0:14:16.41,0:14:17.91,Default,,0,0,0,,Xong thì qua bên đó đi.
Dialogue: 0,0:14:18.75,0:14:21.91,Default,,0,0,0,,Phiền các cậu giải quyết hậu quả giúp nhé.
Dialogue: 0,0:14:23.75,0:14:25.00,Default,,0,0,0,,Tsukuyomi.
Dialogue: 0,0:14:26.04,0:14:28.91,Default,,0,0,0,,Chúng ta phải ở đây phụ trách xử lý tên này.
Dialogue: 0,0:14:28.91,0:14:31.29,Default,,0,0,0,,Vì Hawks thật sự nhanh quá.
Dialogue: 0,0:14:31.29,0:14:34.95,Default,,0,0,0,,Vì vậy cách làm này là hiệu quả nhất.
Dialogue: 0,0:14:34.95,0:14:35.91,Default,,0,0,0,,Tôi phải đuổi theo.
Dialogue: 0,0:14:35.91,0:14:37.12,Default,,0,0,0,,Tsukuyomi!
Dialogue: 0,0:14:37.83,0:14:39.79,Default,,0,0,0,,Cậu ta vẫn hăng hái thật.
Dialogue: 0,0:14:40.87,0:14:45.41,Default,,0,0,0,,Nghe nói đó là lần đầu tiên\NHawks tham gia hoạt động chỉ tên của hội thao.
Dialogue: 0,0:14:48.00,0:14:51.41,Default,,0,0,0,,Lúc đi trải nghiệm thực tế,\Ntôi cũng chỉ suốt ngày chạy theo sau anh ta,
Dialogue: 0,0:14:51.41,0:14:54.66,Default,,0,0,0,,không ngừng giúp anh ta xử lý những vụ đã xong\Nhoặc những hậu quả bất ngờ.
Dialogue: 0,0:14:57.66,0:14:59.12,Default,,0,0,0,,Điều đó khiến tôi thắc mắc.
Dialogue: 0,0:14:59.83,0:15:01.50,Default,,0,0,0,,Nếu trong thời gian đợi người khác đuổi kịp tôi,
Dialogue: 0,0:15:01.50,0:15:03.08,Default,,0,0,0,,tình hình càng thêm nghiêm trọng,
Dialogue: 0,0:15:03.08,0:15:04.66,Default,,0,0,0,,thì đó là chuyện không thể tha thứ.
Dialogue: 0,0:15:04.66,0:15:06.12,Default,,0,0,0,,Nếu vậy...
Dialogue: 0,0:15:06.12,0:15:08.79,Default,,0,0,0,,rốt cuộc sao anh lại chỉ tên tôi?
Dialogue: 0,0:15:08.79,0:15:10.50,Default,,0,0,0,,Vì ta đều là chim.
Dialogue: 0,0:15:12.20,0:15:13.37,Default,,0,0,0,,Anh đang đùa.
Dialogue: 0,0:15:13.37,0:15:15.83,Default,,0,0,0,,Không, có 20% là nói thật.
Dialogue: 0,0:15:15.83,0:15:19.87,Default,,0,0,0,,50% là vì tôi muốn hỏi lớp A một số chuyện,
Dialogue: 0,0:15:19.87,0:15:23.83,Default,,0,0,0,,có liên quan đến đám Liên minh Tội phạm\Nđã tập kích các cậu.
Dialogue: 0,0:15:25.20,0:15:26.95,Default,,0,0,0,,Vì vậy, nếu đã phải tìm,
Dialogue: 0,0:15:26.95,0:15:30.79,Default,,0,0,0,,tất nhiên phải tìm nhân tài ưu tú\Ncó thể theo kịp tôi rồi.
Dialogue: 0,0:15:30.79,0:15:33.41,Default,,0,0,0,,Vì vậy tôi đã chỉ tên người chim xuất sắc
Dialogue: 0,0:15:33.41,0:15:37.00,Default,,0,0,0,,ở trong tốp đầu trong hội thao anh hùng.
Dialogue: 0,0:15:39.25,0:15:43.33,Default,,0,0,0,,Đầu tiên, tôi muốn hỏi cậu chuyện USJ,\Ncó thể nói cho tôi không?
Dialogue: 0,0:15:45.29,0:15:49.08,Default,,0,0,0,,Trong lúc tôi nói cho anh ta\Nchi tiết chuyện USJ bị tập kích,
Dialogue: 0,0:15:49.08,0:15:51.37,Default,,0,0,0,,cảm giác không cam tâm cứ không ngừng dâng lên.
Dialogue: 0,0:15:53.54,0:15:55.79,Default,,0,0,0,,Tôi đâu phải bồ câu đưa thư.
Dialogue: 0,0:15:57.66,0:16:01.45,Default,,0,0,0,,Kết thúc một tuần trải nghiệm thực tế,\Ntôi chẳng học được gì.
Dialogue: 0,0:16:03.00,0:16:05.45,Default,,0,0,0,,Kyushu thế nào?
Dialogue: 0,0:16:05.45,0:16:06.91,Default,,0,0,0,,Bình thường thôi.
Dialogue: 0,0:16:08.08,0:16:09.25,Default,,0,0,0,,Chẳng có gì.
Dialogue: 0,0:16:10.20,0:16:12.45,Default,,0,0,0,,Vậy mà lần thực tập tiếp theo,
Dialogue: 0,0:16:12.45,0:16:14.87,Default,,0,0,0,,anh ta lại tiếp tục nhận tôi.
Dialogue: 0,0:16:15.37,0:16:17.91,Default,,0,0,0,,Từ lúc trải nghiệm thực tế đến khi thực tập,
Dialogue: 0,0:16:17.91,0:16:19.91,Default,,0,0,0,,các anh hùng đã hành động không ít.
Dialogue: 0,0:16:20.62,0:16:22.50,Default,,0,0,0,,Anh muốn hỏi tôi\Ncó những hành động nào phải không,
Dialogue: 0,0:16:22.50,0:16:23.95,Default,,0,0,0,,Hawks?
Dialogue: 0,0:16:24.54,0:16:26.70,Default,,0,0,0,,Đừng xem thường tôi, số 3...
Dialogue: 0,0:16:26.70,0:16:27.75,Default,,0,0,0,,À không,
Dialogue: 0,0:16:27.75,0:16:29.54,Default,,0,0,0,,anh hùng số 2.
Dialogue: 0,0:16:30.83,0:16:32.87,Default,,0,0,0,,Tsukuyomi liều mạng thật.
Dialogue: 0,0:16:32.87,0:16:34.45,Default,,0,0,0,,Đầy triển vọng.
Dialogue: 0,0:16:39.54,0:16:41.54,Default,,0,0,0,,Mọi người vất vả rồi!
Dialogue: 0,0:16:42.20,0:16:44.37,Default,,0,0,0,,Tokoyami, cậu qua đây một lát được không?
Dialogue: 0,0:16:46.08,0:16:48.50,Default,,0,0,0,,Lần này anh lại định hỏi gì tôi nữa?
Dialogue: 0,0:16:48.50,0:16:50.50,Default,,0,0,0,,Tôi đâu có định hỏi cậu.
Dialogue: 0,0:16:51.54,0:16:53.25,Default,,0,0,0,,Ha... Hawks!
Dialogue: 0,0:16:59.50,0:17:01.70,Default,,0,0,0,,Giờ ta biến thành gió rồi.
Dialogue: 0,0:17:01.70,0:17:03.70,Default,,0,0,0,,Đây là lần đầu cậu bay sao?
Dialogue: 0,0:17:05.00,0:17:08.75,Default,,0,0,0,,Tôi tìm cậu, 20% là vì cậu là chim,
Dialogue: 0,0:17:08.75,0:17:11.50,Default,,0,0,0,,50% là vì muốn nghe\Nchuyện của Liên minh Tội phạm,
Dialogue: 0,0:17:11.50,0:17:17.83,Default,,0,0,0,,30% còn lại là vì tôi thấy\Nchuyện cậu đang làm quá mất thời gian.
Dialogue: 0,0:17:19.37,0:17:22.08,Default,,0,0,0,,Bầu trời ấy à, rất tuyệt đó.
Dialogue: 0,0:17:22.08,0:17:24.70,Default,,0,0,0,,Vì có thể nhìn xuống vạn vật.
Dialogue: 0,0:17:26.04,0:17:27.91,Default,,0,0,0,,Anh nói phí thời gian là chỉ...
Dialogue: 0,0:17:30.08,0:17:33.66,Default,,0,0,0,,Cố sức bù đắp\Nkhuyết điểm của bản thân khi cận chiến là tốt,
Dialogue: 0,0:17:33.66,0:17:36.66,Default,,0,0,0,,có điều cậu đừng quên cả việc\Nphát triển sở trường của mình.
Dialogue: 0,0:17:37.20,0:17:39.70,Default,,0,0,0,,Cậu có thể tự do hành động hơn,
Dialogue: 0,0:17:41.04,0:17:44.29,Default,,0,0,0,,dù trước giờ tôi chưa từng nghĩ tới chuyện\Nđào tạo hậu bối.
Dialogue: 0,0:17:44.29,0:17:47.12,Default,,0,0,0,,Suy cho cùng chúng ta đều là chim,\Ncũng coi như có duyên.
Dialogue: 0,0:17:51.37,0:17:54.00,Default,,0,0,0,,Người bay được thì phải bay lên trời.
Dialogue: 0,0:17:58.00,0:18:01.37,Default,,0,0,0,,Đừng để bị gò bó dưới đất.
Dialogue: 0,0:18:04.54,0:18:07.37,Default,,0,0,0,,Tôi sẽ dùng chiêu thức được tạo ra\Nhồi tôi đi theo Hawks để nghênh chiến,
Dialogue: 0,0:18:07.37,0:18:09.83,Default,,0,0,0,,đó là "Thiên thần đen sa ngã".
Dialogue: 0,0:18:10.66,0:18:12.95,Default,,0,0,0,,Thiên thần đen sa ngã?
Dialogue: 0,0:18:13.91,0:18:15.62,Default,,0,0,0,,Nghe rất được.
Dialogue: 0,0:18:15.62,0:18:17.37,Default,,0,0,0,,Cho tôi mở mang xem nào.
Dialogue: 0,0:18:19.62,0:18:21.75,Default,,0,0,0,,Cậu ta đang di chuyển trong bóng đen.
Dialogue: 0,0:18:21.75,0:18:25.25,Default,,0,0,0,,Chúng ta thật sự không ngờ được\Nhọ lại đơn thương độc mã tấn công thế này!
Dialogue: 0,0:18:25.25,0:18:27.87,Default,,0,0,0,,Không ngờ thế trận lại giống trận đấu đầu tiên.
Dialogue: 0,0:18:28.70,0:18:30.41,Default,,0,0,0,,Tương kế tựu kế sao?
Dialogue: 0,0:18:30.41,0:18:33.58,Default,,0,0,0,,Ở sân đấu đầy ống nước này,
Dialogue: 0,0:18:33.58,0:18:36.08,Default,,0,0,0,,rất khó để nắm được vị trí của cậu ta.
Dialogue: 0,0:18:36.08,0:18:37.79,Default,,0,0,0,,Tokoyami, không sao chứ?
Dialogue: 0,0:18:37.79,0:18:39.12,Default,,0,0,0,,Không sao.
Dialogue: 0,0:18:39.12,0:18:41.08,Default,,0,0,0,,Tokoyami Fumikage,
Dialogue: 0,0:18:41.08,0:18:43.66,Default,,0,0,0,,tôi sẽ xuyên thủng cậu!
Dialogue: 0,0:18:43.66,0:18:46.00,Default,,0,0,0,,Mục tiêu của cậu ta là tôi.
Dialogue: 0,0:18:46.00,0:18:49.20,Default,,0,0,0,,Chắc các cậu nghĩ vậy phải không, lớp A?
Dialogue: 0,0:18:49.83,0:18:53.95,Default,,0,0,0,,Tôi và cậu là duyên phận.
Dialogue: 0,0:18:53.95,0:18:58.16,Default,,0,0,0,,Trước khi trận đấu này bắt đầu\Ntôi đã đặt bẫy tinh thần,
Dialogue: 0,0:18:58.16,0:19:00.91,Default,,0,0,0,,làm người ta tưởng mục tiêu của tôi\Nlà Tokoyami Fumikage.
Dialogue: 0,0:19:00.91,0:19:04.12,Default,,0,0,0,,Dù các cậu có nghĩ vậy,\Nnhưng sự thật không phải vậy.
Dialogue: 0,0:19:04.12,0:19:07.50,Default,,0,0,0,,Anh hùng âm mưu Vantadark.
Dialogue: 0,0:19:07.50,0:19:10.66,Default,,0,0,0,,Đây là phong cách của tôi!
Dialogue: 0,0:19:12.12,0:19:13.45,Default,,0,0,0,,Aoyama!
Dialogue: 0,0:19:14.33,0:19:17.66,Default,,0,0,0,,Cứu tôi!
Dialogue: 0,0:19:18.91,0:19:20.45,Default,,0,0,0,,Âm mưu...
Dialogue: 0,0:19:20.45,0:19:22.66,Default,,0,0,0,,Đúng là quá hèn hạ.
Dialogue: 0,0:19:22.66,0:19:25.83,Default,,0,0,0,,Hãy giác ngộ từ gốc rễ đi.
Dialogue: 0,0:19:25.83,0:19:27.50,Default,,0,0,0,,Với tốc độ của tôi,
Dialogue: 0,0:19:27.50,0:19:30.29,Default,,0,0,0,,cộng với địa hình chiến đấu\Nvừa hẹp vừa phức tạp,
Dialogue: 0,0:19:30.29,0:19:31.62,Default,,0,0,0,,Dark Shadow và chủ thể
Dialogue: 0,0:19:31.62,0:19:34.66,Default,,0,0,0,,gắn liền nhau bởi "cái rốn" phiền phức,\Nsẽ làm cậu rất khó hành động.
Dialogue: 0,0:19:34.66,0:19:35.95,Default,,0,0,0,,Tức là,
Dialogue: 0,0:19:35.95,0:19:39.75,Default,,0,0,0,,các cậu không thể nào đuổi kịp tôi.
Dialogue: 0,0:19:39.75,0:19:41.41,Default,,0,0,0,,Cậu nghĩ vậy sao?
Dialogue: 0,0:19:43.83,0:19:45.37,Default,,0,0,0,,Dark Shadow.
Dialogue: 0,0:19:45.37,0:19:47.00,Default,,0,0,0,,Thiên thần đen sa ngã!
Dialogue: 0,0:19:47.75,0:19:49.12,Default,,0,0,0,,Cậu ấy bay được rồi!
Dialogue: 0,0:19:49.12,0:19:50.54,Default,,0,0,0,,Tokoyami...
Dialogue: 0,0:19:50.54,0:19:51.70,Default,,0,0,0,,Chiêu mới kìa!
Dialogue: 0,0:19:51.70,0:19:53.75,Default,,0,0,0,,Sao cậu ấy bay được?
Dialogue: 0,0:19:53.75,0:19:55.87,Default,,0,0,0,,Nguyên lý này thật ra rất đơn giản.
Dialogue: 0,0:19:55.87,0:19:58.12,Default,,0,0,0,,Vì Dark Shadow thường ở trạng thái lơ lửng,
Dialogue: 0,0:19:58.12,0:20:01.54,Default,,0,0,0,,vì vậy cũng có thể ôm Tokoyami di chuyển.
Dialogue: 0,0:20:01.54,0:20:03.45,Default,,0,0,0,,Hơn nữa vì được áo choàng che chắn,
Dialogue: 0,0:20:03.45,0:20:07.29,Default,,0,0,0,,nên có thể tránh sáng,\Nđảm bảo sức mạnh luôn ở mức cao.
Dialogue: 0,0:20:07.29,0:20:10.83,Default,,0,0,0,,Hơn nữa với tư thế ôm đó,\Nhai tay vẫn có thể tự do cử động.
Dialogue: 0,0:20:10.83,0:20:12.62,Default,,0,0,0,,Dark Shadow ở trạng thái lơ lửng.
Dialogue: 0,0:20:12.62,0:20:16.79,Default,,0,0,0,,Cậu ấy biết chắc mọi người coi đó là đương nhiên\Nnên sẽ sơ hở, từ đó lợi dụng điểm này.
Dialogue: 0,0:20:16.79,0:20:19.41,Default,,0,0,0,,Tưởng chừng đơn giản nhưng rất khó lường.
Dialogue: 0,0:20:19.41,0:20:22.95,Default,,0,0,0,,Lợi hại, quá lợi hại!
Dialogue: 0,0:20:22.95,0:20:26.75,Default,,0,0,0,,Có điều tốt nhất cậu đừng quên\Nphải phát triển sở trường của mình.
Dialogue: 0,0:20:26.75,0:20:29.41,Default,,0,0,0,,Hawks, thật sự cám ơn anh.
Dialogue: 0,0:20:33.62,0:20:35.66,Default,,0,0,0,,Tôi sẽ lên thêm một tầng.
Dialogue: 0,0:20:35.66,0:20:38.12,Default,,0,0,0,,Cuộc dạo chơi chói sáng!
Dialogue: 0,0:20:38.75,0:20:41.20,Default,,0,0,0,,Kế hoạch A thất bại rồi.
Dialogue: 0,0:20:41.20,0:20:43.41,Default,,0,0,0,,Aoyama, dùng buffet laser rốn đi.
Dialogue: 0,0:20:43.41,0:20:45.29,Default,,0,0,0,,Tokoyami, bay tự do đi!
Dialogue: 0,0:20:45.29,0:20:47.25,Default,,0,0,0,,Dark Shadow, bám lấy áo khoác.
Dialogue: 0,0:20:47.25,0:20:48.54,Default,,0,0,0,,Biết rồi!
Dialogue: 0,0:20:48.54,0:20:51.12,Default,,0,0,0,,Chỉ cần thay đổi hình dạng của bóng đen là được.
Dialogue: 0,0:20:51.12,0:20:53.25,Default,,0,0,0,,Buffet rốn!
Dialogue: 0,0:20:58.95,0:21:00.66,Default,,0,0,0,,Tìm thấy cậu ta rồi, Hagakure!
Dialogue: 0,0:21:00.66,0:21:03.95,Default,,0,0,0,,Được, lần này có thể bắt cậu ta rồi!
Dialogue: 0,0:21:03.95,0:21:05.25,Default,,0,0,0,,Đến đây thôi.
Dialogue: 0,0:21:05.25,0:21:07.04,Default,,0,0,0,,Tôi không để cậu chạy đâu!
Dialogue: 0,0:21:07.75,0:21:10.16,Default,,0,0,0,,Không ngờ cậu lại một mình tấn công.
Dialogue: 0,0:21:10.16,0:21:13.12,Default,,0,0,0,,Có điều, tất cả những chuyện ngoài dự đoán
Dialogue: 0,0:21:13.12,0:21:16.91,Default,,0,0,0,,đều đã được tôi tính trước cả rồi.
Dialogue: 0,0:21:16.91,0:21:19.12,Default,,0,0,0,,Tính trước cả rồi sao?
Dialogue: 0,0:21:19.12,0:21:20.08,Default,,0,0,0,,Mau đứng lại cho tôi!
Dialogue: 0,0:21:20.08,0:21:22.00,Default,,0,0,0,,Còn không mau khoanh tay chịu trói?
Dialogue: 0,0:21:23.62,0:21:26.45,Default,,0,0,0,,Đây... Đây là nấm!
Dialogue: 0,0:21:28.12,0:21:29.75,Default,,0,0,0,,Quả nhiên,
Dialogue: 0,0:21:29.75,0:21:32.37,Default,,0,0,0,,Kendo vẫn cao tay hơn.
Dialogue: 0,0:21:34.12,0:21:36.83,Default,,0,0,0,,Đúng như Kendo nói.
Dialogue: 0,0:21:36.83,0:21:40.20,Default,,0,0,0,,Chỉ cần thấy ánh sáng,\Ntức là kế hoạch A của Kuroiro đã thất bại.
Dialogue: 0,0:21:42.25,0:21:45.29,Default,,0,0,0,,Bắt đầu kế hoạch B.
Dialogue: 0,0:21:45.29,0:21:48.58,Default,,0,0,0,,Tôi sẽ cho các cậu người mọc toàn nấm.
Dialogue: 0,0:21:50.04,0:21:52.70,Default,,0,0,0,,♫Hẹn gặp lại, tôi nhất định phải đi♫
Dialogue: 0,0:21:52.70,0:21:56.00,Default,,0,0,0,,♫Gào thét, tôi phải thành chính mình♫
Dialogue: 0,0:21:56.00,0:21:58.75,Default,,0,0,0,,♫Tôi mong ở đích đến♫
