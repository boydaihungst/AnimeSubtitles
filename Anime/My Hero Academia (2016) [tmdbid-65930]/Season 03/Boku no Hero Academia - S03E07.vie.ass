Dialogue: 0,0:10:36.00,0:10:37.00,Default,,0,0,0,,NHÓM MÁU: A\NSỞ THÍCH: ĐỒ ĂN CAY
Dialogue: 0,0:10:39.79,0:10:42.25,Default,,0,0,0,,Thầy Vlad King đã báo cảnh sát.
Dialogue: 0,0:10:42.95,0:10:45.29,Default,,0,0,0,,Chỉ 15 phút sau khi kẻ xấu bỏ đi
Dialogue: 0,0:10:45.29,0:10:47.83,Default,,0,0,0,,xe cứu thương và cứu hoả đã tới.
Dialogue: 0,0:10:48.20,0:10:50.12,Default,,0,0,0,,Trong tổng cộng 40 học sinh
Dialogue: 0,0:10:50.12,0:10:53.87,Default,,0,0,0,,15 người bị hôn mê nặng\Ndo khí độc gây ra.
Dialogue: 0,0:10:54.50,0:10:57.00,Default,,0,0,0,,11 người còn lại thì bị thương.
Dialogue: 0,0:10:57.00,0:11:00.66,Default,,0,0,0,,13 người không bị thương tích.
Dialogue: 0,0:11:00.66,0:11:02.50,Default,,0,0,0,,Và còn
Dialogue: 0,0:11:02.50,0:11:04.37,Default,,0,0,0,,một người bị mất tích.
Dialogue: 0,0:11:04.37,0:11:06.29,Default,,0,0,0,,"PIXIE-BOB"\NTrong số sáu anh hùng chuyên nghiệp
Dialogue: 0,0:11:06.29,0:11:09.50,Default,,0,0,0,,"NĂNG LỰC: THỔ LƯU"\Nmột người bị thương nặng ở đầu.
Dialogue: 0,0:11:09.50,0:11:10.50,Default,,0,0,0,,"RAGDOLL. NĂNG LỰC: THĂM DÒ"\NCòn một người
Dialogue: 0,0:11:10.50,0:11:13.33,Default,,0,0,0,,bị mất tích để lại trên hiện trường\Nrất nhiều máu.
Dialogue: 0,0:11:13.33,0:11:15.91,Default,,0,0,0,,"MUSCULAR. NĂNG LỰC: CƯỜNG HOÁ CƠ BẮP"\NVề phía kẻ xấu
Dialogue: 0,0:11:15.91,0:11:18.37,Default,,0,0,0,,có ba kẻ đã bị bắt tại chỗ.
Dialogue: 0,0:11:18.37,0:11:19.79,Default,,0,0,0,,"KẺ XẤU: MUSTARD"\NĐội kẻ xấu
Dialogue: 0,0:11:19.79,0:11:21.20,Default,,0,0,0,,"KẺ XẤU: MOONFISH"\Nđã bỏ lại ba người họ
Dialogue: 0,0:11:21.20,0:11:22.87,Default,,0,0,0,,"KẺ XẤU: MOONFISH"\Nvà biến mất không dấu vết.
Dialogue: 0,0:11:24.70,0:11:25.91,Default,,0,0,0,,Còn về tôi
Dialogue: 0,0:11:25.91,0:11:27.91,Default,,0,0,0,,khi ý thức dần trở nên mơ hồ
Dialogue: 0,0:11:27.91,0:11:29.54,Default,,0,0,0,,tôi nhớ lại về người đàn ông đó.
Dialogue: 0,0:11:29.54,0:11:32.54,Default,,0,0,0,,Những lời mà Tomura Shiragaki từng nói.
Dialogue: 0,0:11:32.54,0:11:35.16,Default,,0,0,0,,Khác với lần này, mày nên cẩn thận hơn.
Dialogue: 0,0:11:35.16,0:11:37.12,Default,,0,0,0,,Lần sau gặp lại
Dialogue: 0,0:11:37.12,0:11:39.91,Default,,0,0,0,,ta có thể sẽ giết mày.
Dialogue: 0,0:11:41.29,0:11:44.54,Default,,0,0,0,,Trại huấn luyện trong rừng\Nmà chúng tôi đều mong chờ
Dialogue: 0,0:11:44.54,0:11:47.54,Default,,0,0,0,,đã kết thúc với một kết cục tồi tệ.
Dialogue: 0,0:11:50.70,0:11:53.41,Default,,0,0,0,,NGÀY TIẾP THEO TRONG KỲ NGHỈ HÈ.
Dialogue: 0,0:11:53.41,0:11:55.25,Default,,0,0,0,,Đã làm phiên. Hãy mở cửa ra.\NXin lỗi.
Dialogue: 0,0:11:55.25,0:11:56.62,Default,,0,0,0,,Chúng tôi đến từ đài Yomiuri.
Dialogue: 0,0:11:56.62,0:11:59.25,Default,,0,0,0,,Yêu cầu trường trung học anh hùng\Nchính thức giải thích về sự việc này.
Dialogue: 0,0:11:59.25,0:12:00.25,Default,,0,0,0,,Xin hỏi các anh
Dialogue: 0,0:12:00.25,0:12:03.00,Default,,0,0,0,,sẽ giải thích như thế nào với\Ngia đình của những học sinh bị thương.
Dialogue: 0,0:12:08.33,0:12:11.12,Default,,0,0,0,,Trại huấn luyện này là để\Nngăn chặn kẻ xấu tấn công
Dialogue: 0,0:12:11.12,0:12:13.00,Default,,0,0,0,,nhưng kết cục lại bị tấn công.
Dialogue: 0,0:12:13.00,0:12:15.37,Default,,0,0,0,,Dù rất xấu hổ nhưng tôi vẫn phải nói.
Dialogue: 0,0:12:15.37,0:12:16.41,Default,,0,0,0,,Trước nay
Dialogue: 0,0:12:16.41,0:12:20.95,Default,,0,0,0,,chỉ nghĩ rằng kẻ xấu sẽ hoạt động\Ntích cực hơn. Thật là ngây thơ.
Dialogue: 0,0:12:20.95,0:12:23.79,Default,,0,0,0,,Bởi vì đã gây chiến rồi.
Dialogue: 0,0:12:23.79,0:12:27.16,Default,,0,0,0,,Mục tiêu là để tiêu diệt xã hội anh hùng.
Dialogue: 0,0:12:27.16,0:12:28.79,Default,,0,0,0,,"NEZU. NĂNG LỰC: KỸ NĂNG CAO CẤP"\NVấn đề là ngay cả khi chúng ta nhận ra điều này,
Dialogue: 0,0:12:28.79,0:12:29.91,Default,,0,0,0,,"NEMURI KAYAMA"\Ncũng chưa chắc đã ngăn chặn được.
Dialogue: 0,0:12:29.91,0:12:30.70,Default,,0,0,0,,"NĂNG LỰC: HƯƠNG G Y NGỦ"\Ncũng chưa chắc đã ngăn chặn được.
Dialogue: 0,0:12:30.70,0:12:34.58,Default,,0,0,0,,Đối phương quá hoang tưởng\Nvà tấn công dồn dập.
Dialogue: 0,0:12:34.58,0:12:36.95,Default,,0,0,0,,Hơn nữa, kể từ khi All Might xuất hiện
Dialogue: 0,0:12:36.95,0:12:38.79,Default,,0,0,0,,số tội phạm đã gần như biến mất.
Dialogue: 0,0:12:38.79,0:12:39.54,Default,,0,0,0,,"PRESENT MIC"\NNói như vậy
