Dialogue: 0,0:00:16.51,0:00:23.77,Songs (Romanji),,0000,0000,0000,,Futari de nigebasho sagashite
Dialogue: 0,0:00:23.85,0:00:31.40,Songs (Romanji),,0000,0000,0000,,Hashitta tenki ame no naka
Dialogue: 0,0:00:31.49,0:00:38.83,Songs (Romanji),,0000,0000,0000,,Tatoeba nanika wo ushinau toshite mo
Dialogue: 0,0:00:38.91,0:00:47.67,Songs (Romanji),,0000,0000,0000,,Mamotte ikanakya hitotsu dake wa
Dialogue: 0,0:00:47.75,0:00:54.80,Songs (Romanji),,0000,0000,0000,,Kono sekai ni umareta sono imi wo
Dialogue: 0,0:00:54.88,0:01:00.43,Songs (Romanji),,0000,0000,0000,,Kimi to mitsuke ni yukou
Dialogue: 0,0:01:00.52,0:01:05.64,Songs (Romanji),,0000,0000,0000,,Itami sae mo kakaenagara
Dialogue: 0,0:01:05.73,0:01:12.53,Songs (Romanji),,0000,0000,0000,,Atarashii keshiki mukae ni yukou
Dialogue: 0,0:00:16.51,0:00:23.77,Songs,,0000,0000,0000,,Hai chúng ta đang tìm một nơi để trốn thoát
Dialogue: 0,0:00:23.85,0:00:31.40,Songs,,0000,0000,0000,,Cùng chạy dưới ánh nắng chói chang
Dialogue: 0,0:00:31.49,0:00:38.83,Songs,,0000,0000,0000,,Ngay cả khi em mất một điều gì khác
Dialogue: 0,0:00:38.91,0:00:47.67,Songs,,0000,0000,0000,,Thì em chỉ muốn giữ lấy một điều duy nhất
Dialogue: 0,0:00:47.75,0:00:54.80,Songs,,0000,0000,0000,,Ý nghĩa khi được sinh ra ở thế giới này
Dialogue: 0,0:00:54.88,0:01:00.43,Songs,,0000,0000,0000,,Hãy đi cùng em và tìm hiểu
Dialogue: 0,0:01:00.52,0:01:05.64,Songs,,0000,0000,0000,,Giữ chặt lấy nó, dù cho là nỗi đau
Dialogue: 0,0:01:05.73,0:01:12.53,Songs,,0000,0000,0000,,Cùng tiến lên đón chào thế giới mới
Dialogue: 0,0:01:15.53,0:01:19.88,Dialogue,,0000,0000,0000,,Translator: MaHiME
Dialogue: 0,0:01:23.88,0:01:29.88,Dialogue,,0000,0000,0000,,Waya fansub presents
Dialogue: 0,0:01:42.85,0:01:44.06,Dialogue,,0000,0000,0000,,Đi nào!
Dialogue: 0,0:01:54.32,0:01:55.36,Dialogue,,0000,0000,0000,,Chú Kalinin...
Dialogue: 0,0:01:55.45,0:01:59.16,Dialogue,,0000,0000,0000,,Ông ấy sẽ không chết đâu dù cho tận thế đi chăng nữa.
Dialogue: 0,0:02:04.04,0:02:05.12,Dialogue,,0000,0000,0000,,Bọn họ là ai thế ?
Dialogue: 0,0:02:05.21,0:02:07.79,Dialogue,,0000,0000,0000,,Mẫu 96 của lực lượng phòng vệ mặt đất.
Dialogue: 0,0:02:37.74,0:02:39.57,Dialogue,,0000,0000,0000,,{\i1}Cái gì thế này?{\i0}
Dialogue: 0,0:02:39.66,0:02:40.53,Dialogue,,0000,0000,0000,,Bà chị!
Dialogue: 0,0:02:40.62,0:02:41.82,Dialogue,,0000,0000,0000,,Melissa!
Dialogue: 0,0:02:45.79,0:02:46.87,Dialogue,,0000,0000,0000,,Mình không thể di chuyển!
Dialogue: 0,0:02:46.96,0:02:49.92,Dialogue,,0000,0000,0000,,Melissa, dùng dao cắt phân tử nhắm vào ngón tay cái!
Dialogue: 0,0:02:50.00,0:02:51.88,Dialogue,,0000,0000,0000,,Cô bây giờ đang...
Dialogue: 0,0:03:00.51,0:03:02.47,Dialogue,,0000,0000,0000,,MELISSA !
Dialogue: 0,0:03:24.53,0:03:27.87,Dialogue,,0000,0000,0000,,Lambda Driver, chức năng B.
Dialogue: 0,0:03:27.95,0:03:30.12,Dialogue,,0000,0000,0000,,Thử xem nào!
Dialogue: 0,0:03:35.25,0:03:37.50,Dialogue,,0000,0000,0000,,Lá chắn...
Dialogue: 0,0:03:37.59,0:03:39.76,Dialogue,,0000,0000,0000,,Phải, một lá chắn !
Dialogue: 0,0:03:44.43,0:03:46.22,Dialogue,,0000,0000,0000,,Lambda Driver.
Dialogue: 0,0:03:49.52,0:03:51.18,Dialogue,,0000,0000,0000,,Vô dụng thôi.
Dialogue: 0,0:04:18.05,0:04:19.92,Dialogue,,0000,0000,0000,,Thấy cô rồi nhé...
Dialogue: 0,0:04:20.01,0:04:25.59,Dialogue,,0000,0000,0000,,Testarossa-san chẳng bao giờ nhận ra cảm xúc của ta.
Dialogue: 0,0:04:27.22,0:04:31.06,Dialogue,,0000,0000,0000,,Nếu như mình giết Takuma ngay lúc đó...
Dialogue: 0,0:04:31.14,0:04:35.19,Dialogue,,0000,0000,0000,,thì kẻ địch sẽ phải từ bỏ hy vọng điều khiển Behemoth.
Dialogue: 0,0:04:35.27,0:04:38.44,Dialogue,,0000,0000,0000,,Và...và...
Dialogue: 0,0:04:41.24,0:04:45.82,Dialogue,,0000,0000,0000,,Vậy là đủ rồi. Nếu mình không thể có cô ấy, mình sẽ giết cô ấy.
Dialogue: 0,0:04:50.45,0:04:52.20,Dialogue,,0000,0000,0000,,Khốn kiếp!
Dialogue: 0,0:04:52.29,0:04:53.66,Dialogue,,0000,0000,0000,,Tessa, vào trong đi !
Dialogue: 0,0:04:53.75,0:04:55.29,Dialogue,,0000,0000,0000,,Đẩy đi, Sousuke!
Dialogue: 0,0:04:55.38,0:04:56.75,Dialogue,,0000,0000,0000,,Rõ !
Dialogue: 0,0:05:06.22,0:05:08.22,Dialogue,,0000,0000,0000,,Tôi để cho cậu lái đấy, Sousuke!
Dialogue: 0,0:05:31.20,0:05:33.16,Dialogue,,0000,0000,0000,,Thuyền trưởng! Thuyền trưởng!
Dialogue: 0,0:05:41.34,0:05:44.09,Dialogue,,0000,0000,0000,,Thuyền trưởng, về việc xin thêm chi viện thì sao ?
Dialogue: 0,0:05:44.17,0:05:47.47,Dialogue,,0000,0000,0000,,Chúng ta cần phải làm gì đó với con robot khổng lồ kia. Xin hãy ra mệnh lệnh.
Dialogue: 0,0:05:50.10,0:05:53.10,Dialogue,,0000,0000,0000,,Không ai có thể thoát khỏi tay ta.
Dialogue: 0,0:05:53.18,0:05:56.14,Dialogue,,0000,0000,0000,,Không kẻ nào có thể cản được ta.
Dialogue: 0,0:06:09.41,0:06:11.58,Dialogue,,0000,0000,0000,,Thuyền trưởng, cô không sao chứ ?
Dialogue: 0,0:06:14.33,0:06:17.91,Dialogue,,0000,0000,0000,,Chú Mardukas, hiện tại tàu ngầm đang ở vị trí nào ?
Dialogue: 0,0:06:18.00,0:06:21.13,Dialogue,,0000,0000,0000,,Cách bán đảo Kii 120 km về phía nam.
Dialogue: 0,0:06:21.21,0:06:25.17,Dialogue,,0000,0000,0000,,Nó quá xa để lực lượng tiếp viện khẩn cấp có thể đến kịp.
Dialogue: 0,0:06:25.26,0:06:27.97,Dialogue,,0000,0000,0000,,Thuyền trưởng, còn việc dùng tên lửa đạn đạo để gửi Arbalest đến thì sao ?
Dialogue: 0,0:06:28.05,0:06:32.14,Dialogue,,0000,0000,0000,,Không thể nào! Việc đó cần phải tốn 1 giờ để chuẩn bị.
Dialogue: 0,0:06:32.22,0:06:35.14,Dialogue,,0000,0000,0000,,Cậu có tưởng tượng được rằng con Behemoth khổng lồ đó...
Dialogue: 0,0:06:35.22,0:06:38.44,Dialogue,,0000,0000,0000,,sẽ gây ra thiệt hại thế nào trong khoảng 1 giờ cho đến khi Arbalest đến không ?
Dialogue: 0,0:06:40.40,0:06:44.19,Dialogue,,0000,0000,0000,,Không thể làm được gì cả. Mình không thể làm được gì...
Dialogue: 0,0:06:44.28,0:06:48.61,Dialogue,,0000,0000,0000,,Thuyền trưởng, có phải cô đang rất cần đến Arbalest không ?
Dialogue: 0,0:06:48.70,0:06:49.70,Dialogue,,0000,0000,0000,,Vâng.
Dialogue: 0,0:06:49.78,0:06:51.03,Dialogue,,0000,0000,0000,,Ngay bây giờ ?
Dialogue: 0,0:06:51.12,0:06:52.45,Dialogue,,0000,0000,0000,,Vâng.
Dialogue: 0,0:06:52.53,0:06:54.66,Dialogue,,0000,0000,0000,,Vậy thì chúng ta sẽ phóng nó.
Dialogue: 0,0:06:54.74,0:06:56.24,Dialogue,,0000,0000,0000,,Chú vừa nói gì vậy ?
Dialogue: 0,0:06:56.33,0:06:58.87,Dialogue,,0000,0000,0000,,Dù không có sự cho phép của cô...
Dialogue: 0,0:06:58.96,0:07:01.71,Dialogue,,0000,0000,0000,,nhưng chúng tôi đã chuẩn bị tên lửa đạn đạo với Arbalest bên trong...
Dialogue: 0,0:07:01.79,0:07:04.25,Dialogue,,0000,0000,0000,,và sẵn sàng phóng trong vòng 3 phút.
Dialogue: 0,0:07:04.34,0:07:07.17,Dialogue,,0000,0000,0000,,Nó sẽ đến mục tiêu khoảng 6 phút kể từ lúc phóng.
Dialogue: 0,0:07:07.26,0:07:11.59,Dialogue,,0000,0000,0000,,Có nghĩa là tôi cần thời gian 9 phút để hoàn tất.
Dialogue: 0,0:07:11.68,0:07:13.76,Dialogue,,0000,0000,0000,,Chú Mardukas!
Dialogue: 0,0:07:13.85,0:07:17.77,Dialogue,,0000,0000,0000,,Tôi thành thật xin lỗi. Tôi sẽ chấp nhận hình phạt.
Dialogue: 0,0:07:17.85,0:07:21.23,Dialogue,,0000,0000,0000,,Không đâu, cháu rất vui vì chú đã làm điều đó. Xin hãy phóng nó ngay bây giờ.
Dialogue: 0,0:07:21.31,0:07:24.19,Dialogue,,0000,0000,0000,,Vâng, thuyền trưởng. Chúng ta sẽ thả nó ở đâu ?
Dialogue: 0,0:07:25.19,0:07:26.19,Dialogue,,0000,0000,0000,,Ở đây không ổn.
Dialogue: 0,0:07:26.28,0:07:30.45,Dialogue,,0000,0000,0000,,Rất có thể tên khổng lồ đó sẽ tấn công ngay khi nó vừa thả xuống.
Dialogue: 0,0:07:30.53,0:07:36.91,Dialogue,,0000,0000,0000,,Một nơi mà chúng ta có đủ thời gian để phi công có thể vào trong.
Dialogue: 0,0:07:36.99,0:07:40.50,Dialogue,,0000,0000,0000,,Nó phải khuất tầm nhìn, nhưng không được ở trung tâm thành phố.
Dialogue: 0,0:07:40.58,0:07:43.04,Dialogue,,0000,0000,0000,,Chúng ta có thể làm dân thường bị liên lụy.
Dialogue: 0,0:07:43.13,0:07:47.09,Dialogue,,0000,0000,0000,,Ít ánh sáng và không gian hẹp.
Dialogue: 0,0:07:47.17,0:07:50.47,Dialogue,,0000,0000,0000,,Nơi mà có thể di chuyển lên hoặc xuống. Nơi tốt nhất...
Dialogue: 0,0:07:50.55,0:07:54.30,Dialogue,,0000,0000,0000,,nơi tốt nhất để Arbalest thể hiện khả năng của mình.
Dialogue: 0,0:07:54.39,0:07:55.97,Dialogue,,0000,0000,0000,,Nó ở đâu ?
Dialogue: 0,0:07:58.47,0:08:00.31,Dialogue,,0000,0000,0000,,Là nó !
Dialogue: 0,0:08:00.39,0:08:01.85,Dialogue,,0000,0000,0000,,Phóng !
Dialogue: 0,0:08:13.95,0:08:15.74,Dialogue,,0000,0000,0000,,Nó đang đuổi theo chúng ta.
Dialogue: 0,0:08:18.33,0:08:20.33,Dialogue,,0000,0000,0000,,Nó đang bắn vào chúng ta. Đổi làn đường khi tôi ra hiệu.
Dialogue: 0,0:08:20.41,0:08:21.20,Dialogue,,0000,0000,0000,,Hiểu rồi!
Dialogue: 0,0:08:21.25,0:08:24.37,Dialogue,,0000,0000,0000,,Nó đến đấy , nó đến đấy, nó đến đấy! Đổi làn đường !
Dialogue: 0,0:08:27.59,0:08:30.88,Dialogue,,0000,0000,0000,,Nếu nó bắn vào chúng ta một lần nữa thì chiếc xe này sẽ không chịu nổi đâu.
Dialogue: 0,0:08:30.97,0:08:33.05,Dialogue,,0000,0000,0000,,Sousuke, cứ chạy thẳng phía trước !
Dialogue: 0,0:08:33.13,0:08:34.09,Dialogue,,0000,0000,0000,,Cậu tính làm gì thế ?
Dialogue: 0,0:08:34.18,0:08:37.76,Dialogue,,0000,0000,0000,,Tôi sẽ bắn hắn. Nghe này, cứ chạy thẳng.
Dialogue: 0,0:08:37.85,0:08:39.56,Dialogue,,0000,0000,0000,,Đừng thay đổi tốc độ.
Dialogue: 0,0:08:39.64,0:08:40.81,Dialogue,,0000,0000,0000,,Rõ.
Dialogue: 0,0:08:45.44,0:08:47.11,Dialogue,,0000,0000,0000,,Anh tính làm gì thế ?
Dialogue: 0,0:08:47.19,0:08:50.15,Dialogue,,0000,0000,0000,,Yên lặng nào, Kaname-chan. Cô sẽ sớm biết thôi.
Dialogue: 0,0:08:52.49,0:08:56.87,Dialogue,,0000,0000,0000,,Đến đây! Nhắm vào tao này, thằng khốn !
Dialogue: 0,0:09:08.50,0:09:10.88,Dialogue,,0000,0000,0000,,{\i1}Súng Vulcan bên phải đầu đã bị hư hại.{\i0}
Dialogue: 0,0:09:10.96,0:09:12.88,Dialogue,,0000,0000,0000,,{\i1}Khống chế vụ nổ hoàn tất{\i0}.
Dialogue: 0,0:09:12.88,0:09:15.30,Dialogue,,0000,0000,0000,,{\i1}Súng Vulcan bên phải đầu không thể hoạt động.{\i0}
Dialogue: 0,0:09:11.88,0:09:14.80,Dialogue,,0000,0000,0000,,Sao ngươi dám làm thế với Behemoth của ta ?
Dialogue: 0,0:09:15.38,0:09:17.76,Dialogue,,0000,0000,0000,,Kurz-kun, hay quá !
Dialogue: 0,0:09:17.85,0:09:19.01,Dialogue,,0000,0000,0000,,Còn phải nói!
Dialogue: 0,0:09:19.10,0:09:23.85,Dialogue,,0000,0000,0000,,Tôi đã từng nghĩ anh chỉ là kẻ yếu đuối và hay lừa gạt.
Dialogue: 0,0:09:23.94,0:09:26.10,Dialogue,,0000,0000,0000,,Còn quá sớm để thư giãn.
Dialogue: 0,0:10:03.52,0:10:06.73,Dialogue,,0000,0000,0000,,Behemoth đã di chuyển chưa ?
Dialogue: 0,0:10:09.02,0:10:11.56,Dialogue,,0000,0000,0000,,Rồi, cô đã thắng.
Dialogue: 0,0:10:11.65,0:10:14.61,Dialogue,,0000,0000,0000,,Điều đó không còn quan trọng nữa.
Dialogue: 0,0:10:18.03,0:10:21.57,Dialogue,,0000,0000,0000,,Nó là bất khả chiến bại.
Dialogue: 0,0:10:21.66,0:10:24.37,Dialogue,,0000,0000,0000,,Năng lượng đủ để nó hoạt động suốt 40 giờ.
Dialogue: 0,0:10:24.45,0:10:27.04,Dialogue,,0000,0000,0000,,Cho đến khi đó, không gì có thể ngăn được nó.
Dialogue: 0,0:10:27.12,0:10:29.87,Dialogue,,0000,0000,0000,,Điều đó tùy thuộc vào Takuma thôi.
Dialogue: 0,0:10:29.96,0:10:33.00,Dialogue,,0000,0000,0000,,Tôi cảm thấy có lỗi với cậu ta.
Dialogue: 0,0:10:33.09,0:10:36.46,Dialogue,,0000,0000,0000,,Ký ức của cậu ta đã bị rối loạn và bằng cách nào đó, cậu ta bắt đầu tin rằng...
Dialogue: 0,0:10:36.55,0:10:40.84,Dialogue,,0000,0000,0000,,tôi chính là chị của cậu ta, người mà chính tay cậu ta đã giết.
Dialogue: 0,0:10:40.93,0:10:44.51,Dialogue,,0000,0000,0000,,Vì vậy tôi đã lợi dụng điều đó.
Dialogue: 0,0:10:44.60,0:10:48.10,Dialogue,,0000,0000,0000,,Tôi không có gia đình.
Dialogue: 0,0:10:48.19,0:10:51.35,Dialogue,,0000,0000,0000,,Tôi đã luôn cô độc.
Dialogue: 0,0:10:54.61,0:10:55.73,Dialogue,,0000,0000,0000,,Ông không hỏi tôi sao ?
Dialogue: 0,0:10:55.82,0:10:56.74,Dialogue,,0000,0000,0000,,Về cái gì ?
Dialogue: 0,0:10:56.82,0:10:58.57,Dialogue,,0000,0000,0000,,Lý do mà tôi cứu ông.
Dialogue: 0,0:10:58.65,0:11:00.57,Dialogue,,0000,0000,0000,,Tôi có thể đoán được.
Dialogue: 0,0:11:00.66,0:11:03.91,Dialogue,,0000,0000,0000,,Ông nói cứ như thể ông biết tất cả vậy.
Dialogue: 0,0:11:03.99,0:11:07.91,Dialogue,,0000,0000,0000,,Tôi ghét ông. Ông làm tôi phát bệnh.
Dialogue: 0,0:11:08.00,0:11:10.37,Dialogue,,0000,0000,0000,,Xin lỗi.
Dialogue: 0,0:11:10.46,0:11:15.05,Dialogue,,0000,0000,0000,,Em thật sự rất ghét... anh.
Dialogue: 0,0:11:16.46,0:11:19.97,Dialogue,,0000,0000,0000,,Chí ít anh cũng cho em biết tên chứ ?
Dialogue: 0,0:11:20.05,0:11:25.43,Dialogue,,0000,0000,0000,,Andrey Sergeivich Kalinin.
Dialogue: 0,0:11:25.51,0:11:28.10,Dialogue,,0000,0000,0000,,Một cái tên kỳ lạ...
Dialogue: 0,0:11:52.21,0:11:55.38,Dialogue,,0000,0000,0000,,Thiệt tình, cứ tưởng là tiêu rồi chứ.
Dialogue: 0,0:11:57.80,0:11:59.38,Dialogue,,0000,0000,0000,,Người quen của ông à ?
Dialogue: 0,0:12:02.09,0:12:05.76,Dialogue,,0000,0000,0000,,Phải, đại loại là thế.
Dialogue: 0,0:12:08.68,0:12:09.89,Dialogue,,0000,0000,0000,,Nhanh lên ! Nhanh lên nào !
Dialogue: 0,0:12:09.98,0:12:13.14,Dialogue,,0000,0000,0000,,Nếu cậu có thời gian để cười, sao cậu không bắn thêm một phát nữa ?
Dialogue: 0,0:12:13.23,0:12:14.85,Dialogue,,0000,0000,0000,,Đừng bắt tôi làm điều không thể chứ.
Dialogue: 0,0:12:16.32,0:12:18.90,Dialogue,,0000,0000,0000,,Tôi không thể bắn nếu cậu cứ chạy như thế này.
Dialogue: 0,0:12:23.70,0:12:25.07,Dialogue,,0000,0000,0000,,Là nó à ?
Dialogue: 0,0:12:27.91,0:12:29.54,Dialogue,,0000,0000,0000,,Tớ chưa bao giờ thấy nó trước đây.
Dialogue: 0,0:12:29.62,0:12:31.79,Dialogue,,0000,0000,0000,,Không ổn rồi. Nó có thể phát hiện ra.
Dialogue: 0,0:12:44.18,0:12:45.93,Dialogue,,0000,0000,0000,,Nó tiêu rồi.
Dialogue: 0,0:12:46.01,0:12:50.43,Dialogue,,0000,0000,0000,,Chưa đâu, cỗ máy đó không dễ bị phá hủy như thế.
Dialogue: 0,0:12:50.52,0:12:51.43,Dialogue,,0000,0000,0000,,Sagara-san.
Dialogue: 0,0:12:51.52,0:12:52.60,Dialogue,,0000,0000,0000,,Rõ.
Dialogue: 0,0:12:52.69,0:12:53.64,Dialogue,,0000,0000,0000,,Chidori!
Dialogue: 0,0:12:54.13,0:12:54.52,Dialogue,,0000,0000,0000,,Hả ?
Dialogue: 0,0:12:54.60,0:12:55.77,Dialogue,,0000,0000,0000,,Hãy lái chiếc xe này.
Dialogue: 0,0:12:56.90,0:12:58.86,Dialogue,,0000,0000,0000,,Tớ chỉ là học sinh trung học thôi!
Dialogue: 0,0:12:59.90,0:13:01.86,Dialogue,,0000,0000,0000,,Được rồi !\N Quẹo bên này, Kaname!
Dialogue: 0,0:13:05.20,0:13:07.95,Dialogue,,0000,0000,0000,,Đừng đạp thắng ! Chúng ta sẽ tiêu nếu như dừng lại!
Dialogue: 0,0:13:08.03,0:13:10.74,Dialogue,,0000,0000,0000,,Trời ạ, chuyện gì đang xảy ra thế này !
Dialogue: 0,0:13:15.75,0:13:17.50,Dialogue,,0000,0000,0000,,Uruz 6 gọi Uruz 7!
Dialogue: 0,0:13:17.59,0:13:19.25,Dialogue,,0000,0000,0000,,Đây là Uruz 7.
Dialogue: 0,0:13:19.34,0:13:21.21,Dialogue,,0000,0000,0000,,Cậu làm gì mà lâu thế ?
Dialogue: 0,0:13:21.30,0:13:24.76,Dialogue,,0000,0000,0000,,Khóa tay đã bị kẹt bên dưới , tôi không thể mở được lớp vỏ.
Dialogue: 0,0:13:24.84,0:13:26.18,Dialogue,,0000,0000,0000,,Cái gì ?
Dialogue: 0,0:13:29.05,0:13:31.72,Dialogue,,0000,0000,0000,,Có nghĩa là cậu không thể phá được lớp vỏ bên ngoài ?
Dialogue: 0,0:13:31.81,0:13:33.52,Dialogue,,0000,0000,0000,,Đúng thế.
Dialogue: 0,0:13:32.31,0:13:33.52,Dialogue,,0000,0000,0000,,Tên ngu ngốc !
Dialogue: 0,0:13:33.60,0:13:35.23,Dialogue,,0000,0000,0000,,Nếu chúng tôi trở thành món trứng tráng thì đó là lỗi của cậu.
Dialogue: 0,0:13:35.31,0:13:37.23,Dialogue,,0000,0000,0000,,Tôi sẽ nguyền rủa con cháu đời sau của cậu.
Dialogue: 0,0:13:37.31,0:13:40.19,Dialogue,,0000,0000,0000,,Tôi còn quả lựu đạn cuối cùng. Tôi sẽ thử.
Dialogue: 0,0:13:52.33,0:13:54.41,Dialogue,,0000,0000,0000,,Tăng tốc lên! \N Tớ biết rồi!
Dialogue: 0,0:13:59.88,0:14:02.71,Dialogue,,0000,0000,0000,,Vào trong! Chạy vào trong ! Phá cánh cửa gara đi!
Dialogue: 0,0:14:11.14,0:14:13.06,Dialogue,,0000,0000,0000,,Đau quá...
Dialogue: 0,0:14:14.27,0:14:15.39,Dialogue,,0000,0000,0000,,Tessa!
Dialogue: 0,0:14:18.65,0:14:20.10,Dialogue,,0000,0000,0000,,Gì thế này?
Dialogue: 0,0:14:20.19,0:14:22.02,Dialogue,,0000,0000,0000,,Mình đã thấy nó trước đây.
Dialogue: 0,0:14:24.69,0:14:26.53,Dialogue,,0000,0000,0000,,Ra khỏi xe nào, Kaname!
Dialogue: 0,0:14:34.70,0:14:37.08,Dialogue,,0000,0000,0000,,{\i1}Lambda Driver, chức năng A đang giảm.{\i0}
Dialogue: 0,0:14:37.16,0:14:39.21,Dialogue,,0000,0000,0000,,{\i1}Xuất hiện các bức sóng can thiệp trong hệ thống khung xương.{\i0}
Dialogue: 0,0:14:39.29,0:14:42.04,Dialogue,,0000,0000,0000,,Không được, mình cần phải tập trung.
Dialogue: 0,0:14:42.13,0:14:44.46,Dialogue,,0000,0000,0000,,Sagara Sousuke đang ở đâu ?
Dialogue: 0,0:14:44.55,0:14:46.17,Dialogue,,0000,0000,0000,,Ai mà biết, tên ngu ngốc!
Dialogue: 0,0:14:46.26,0:14:48.51,Dialogue,,0000,0000,0000,,Sao không đi mà hỏi bà chị của ngươi đấy?
Dialogue: 0,0:14:48.59,0:14:50.55,Dialogue,,0000,0000,0000,,Hắn ta đâu rồi ?
Dialogue: 0,0:14:53.72,0:14:55.10,Dialogue,,0000,0000,0000,,Ngươi muốn làm gì ?
Dialogue: 0,0:14:58.77,0:15:02.81,Dialogue,,0000,0000,0000,,Liếm môi của ngươi trước con mồi chẳng phải là quá sớm sao.
Dialogue: 0,0:15:02.90,0:15:03.94,Dialogue,,0000,0000,0000,,Ngươi nói gì ?
Dialogue: 0,0:15:04.02,0:15:06.61,Dialogue,,0000,0000,0000,,Ta sẽ đấu với ngươi. Đến đây !
Dialogue: 0,0:15:06.69,0:15:08.49,Dialogue,,0000,0000,0000,,Tốt thôi !
Dialogue: 0,0:15:17.62,0:15:19.04,Dialogue,,0000,0000,0000,,Không có tác dụng ư ?
Dialogue: 0,0:15:28.59,0:15:29.97,Dialogue,,0000,0000,0000,,Sousuke!
Dialogue: 0,0:15:31.93,0:15:33.89,Dialogue,,0000,0000,0000,,Sao thế, Kaname-chan?
Dialogue: 0,0:15:39.81,0:15:45.23,Dialogue,,0000,0000,0000,,Làm... làm lạnh thế nào... hạ nhiệt ?
Dialogue: 0,0:15:45.32,0:15:47.28,Dialogue,,0000,0000,0000,,Kaname-san, làm ơn...
Dialogue: 0,0:15:47.36,0:15:53.49,Dialogue,,0000,0000,0000,,Hãy nói anh ấy tấn công vào một trong những hệ thống hạ nhiệt đang sử dụng cho Lambda Driver.
Dialogue: 0,0:15:53.57,0:15:54.91,Dialogue,,0000,0000,0000,,Nhanh lên!
Dialogue: 0,0:15:57.75,0:15:58.66,Dialogue,,0000,0000,0000,,Al!
Dialogue: 0,0:15:58.75,0:16:00.75,Dialogue,,0000,0000,0000,,Vâng, trung sĩ.
Dialogue: 0,0:16:00.83,0:16:05.08,Dialogue,,0000,0000,0000,,Con robot đó đang trang bị Lambda Driver phải không ?
Dialogue: 0,0:16:05.17,0:16:06.42,Dialogue,,0000,0000,0000,,{\i1}Xác nhận.{\i0}
Dialogue: 0,0:16:06.50,0:16:12.34,Dialogue,,0000,0000,0000,,Nếu như ta đã biết robot đối phương có Lambda Driver thì có cách nào để phản công không ?
Dialogue: 0,0:16:12.43,0:16:13.76,Dialogue,,0000,0000,0000,,{\i1}Không biết.{\i0}
Dialogue: 0,0:16:13.84,0:16:16.93,Dialogue,,0000,0000,0000,,Ta là chỉ huy ở đây, yêu cầu thông tin.
Dialogue: 0,0:16:17.01,0:16:18.39,Dialogue,,0000,0000,0000,,{\i1}Yêu cầu được chấp nhận.{\i0}
Dialogue: 0,0:16:18.51,0:16:20.39,Dialogue,,0000,0000,0000,,{\i1}Tuy nhiên, vẫn không biết.{\i0}
Dialogue: 0,0:16:27.40,0:16:29.57,Dialogue,,0000,0000,0000,,Mình cần phải tập trung các giác quan.
Dialogue: 0,0:16:39.95,0:16:42.54,Dialogue,,0000,0000,0000,,{\i1}Khớp đầu gối phải bị hư hỏng.{\i0}
Dialogue: 0,0:16:45.88,0:16:47.84,Dialogue,,0000,0000,0000,,Cậu có nghe tớ không, Sousuke?
Dialogue: 0,0:16:47.92,0:16:48.88,Dialogue,,0000,0000,0000,,Chidori?
Dialogue: 0,0:16:48.96,0:16:52.88,Dialogue,,0000,0000,0000,,Nghe này! Tớ không hiểu lắm nhưng mà ở dưới háng của nó...
Dialogue: 0,0:16:52.97,0:16:57.39,Dialogue,,0000,0000,0000,,có vẻ như có hệ thống hạ nhiệt cho Lambda Driver.
Dialogue: 0,0:16:57.47,0:16:58.47,Dialogue,,0000,0000,0000,,Và ?
Dialogue: 0,0:16:58.56,0:17:01.43,Dialogue,,0000,0000,0000,,Tấn công vào đó! Có thể..
Dialogue: 0,0:17:01.52,0:17:02.39,Dialogue,,0000,0000,0000,,Có thể ư ?
Dialogue: 0,0:17:02.48,0:17:05.73,Dialogue,,0000,0000,0000,,Đó là những gì tớ biết. Tấn công bình thường sẽ không có tác dụng.
Dialogue: 0,0:17:05.81,0:17:09.69,Dialogue,,0000,0000,0000,,Cậu cần phải sử dụng Lambda Driver. Cậu có nó mà, phải không ?
Dialogue: 0,0:17:09.78,0:17:10.94,Dialogue,,0000,0000,0000,,Thuyền trưởng đã nói cho cô biết à ?
Dialogue: 0,0:17:11.03,0:17:12.78,Dialogue,,0000,0000,0000,,Cậu đang nói về Tessa ?
Dialogue: 0,0:17:12.86,0:17:14.90,Dialogue,,0000,0000,0000,,Có thể là vậy. Cứ cho là cô ấy nói đi.
Dialogue: 0,0:17:14.99,0:17:16.57,Dialogue,,0000,0000,0000,,Sao lại tùy tiện như thế.
Dialogue: 0,0:17:18.83,0:17:19.99,Dialogue,,0000,0000,0000,,Chidori?!
Dialogue: 0,0:17:23.46,0:17:25.04,Dialogue,,0000,0000,0000,,Đừng hoảng sợ.
Dialogue: 0,0:17:26.13,0:17:28.08,Dialogue,,0000,0000,0000,,Đừng nghĩ là nó vô lý.
Dialogue: 0,0:17:28.96,0:17:32.96,Dialogue,,0000,0000,0000,,Viên đạn mình bắn ngay lúc này sẽ xuyên thủng lá chắn của hắn.
Dialogue: 0,0:17:33.05,0:17:35.34,Dialogue,,0000,0000,0000,,Hãy tin như thế.
Dialogue: 0,0:17:35.43,0:17:37.51,Dialogue,,0000,0000,0000,,Phải, giống như lần đó!
Dialogue: 0,0:17:37.59,0:17:39.10,Dialogue,,0000,0000,0000,,Chết đi !
Dialogue: 0,0:17:39.18,0:17:43.68,Dialogue,,0000,0000,0000,,Đó là một khe hẹp. Trái hay phải gì cũng được.
Dialogue: 0,0:17:46.48,0:17:48.86,Dialogue,,0000,0000,0000,,Tập trung các giác quan của mình.
Dialogue: 0,0:17:48.94,0:17:51.73,Dialogue,,0000,0000,0000,,Nó sẽ trúng. Mình sẽ bắn trúng.
Dialogue: 0,0:17:51.82,0:17:53.40,Dialogue,,0000,0000,0000,,Mình sẽ phá hủy được nó!
Dialogue: 0,0:17:53.49,0:17:54.86,Dialogue,,0000,0000,0000,,CHẾT ĐI!
Dialogue: 0,0:18:06.25,0:18:10.00,Dialogue,,0000,0000,0000,,{\i1}Chức năng của Lambda Driver đã ngưng hoạt động. Khả năng hồi phục bằng 0.{\i0}
Dialogue: 0,0:18:10.09,0:18:13.67,Dialogue,,0000,0000,0000,,{\i1}Behemoth bị đổ sập do quá tải.{\i0}
Dialogue: 0,0:18:47.83,0:18:50.58,Dialogue,,0000,0000,0000,,Em đã thua rồi, nee-san. Tại sao?
Dialogue: 0,0:18:50.67,0:18:54.67,Dialogue,,0000,0000,0000,,Cậu đã không thua, nhưng điều này có thể xảy ra.
Dialogue: 0,0:18:54.76,0:18:56.96,Dialogue,,0000,0000,0000,,Thật bất công.
Dialogue: 0,0:18:57.05,0:19:00.13,Dialogue,,0000,0000,0000,,Phải, nó thật bất công.
Dialogue: 0,0:19:00.22,0:19:04.10,Dialogue,,0000,0000,0000,,Em đã không còn gì nữa.
Dialogue: 0,0:19:04.18,0:19:07.68,Dialogue,,0000,0000,0000,,Cậu sẽ ổn thôi Takuma. Tôi đã ở đây với cậu.
Dialogue: 0,0:19:07.77,0:19:09.31,Dialogue,,0000,0000,0000,,Nee-san...
Dialogue: 0,0:19:09.39,0:19:12.27,Dialogue,,0000,0000,0000,,Tôi sẽ bên cậu mãi mãi.
Dialogue: 0,0:19:12.36,0:19:13.90,Dialogue,,0000,0000,0000,,Thật chứ?
Dialogue: 0,0:19:13.98,0:19:17.99,Dialogue,,0000,0000,0000,,Phải, đừng lo nghĩ gì cả, hãy ngủ đi.
Dialogue: 0,0:19:18.07,0:19:21.03,Dialogue,,0000,0000,0000,,Vâng, xin lỗi.
Dialogue: 0,0:19:34.00,0:19:36.05,Dialogue,,0000,0000,0000,,Anh làm tốt lắm, Weber-san.
Dialogue: 0,0:19:36.13,0:19:38.97,Dialogue,,0000,0000,0000,,Kỹ năng của anh vẫn sắc bén như xưa.
Dialogue: 0,0:19:39.05,0:19:40.09,Dialogue,,0000,0000,0000,,Dĩ nhiên...
Dialogue: 0,0:19:40.18,0:19:42.05,Dialogue,,0000,0000,0000,,Cậu làm tốt lắm, Sagara-san.
Dialogue: 0,0:19:42.14,0:19:44.51,Dialogue,,0000,0000,0000,,Không đâu, thuyền trưởng.
Dialogue: 0,0:19:44.60,0:19:48.52,Dialogue,,0000,0000,0000,,Con robot này là của cậu. Hãy chăm sóc cho nó nhé.
Dialogue: 0,0:19:48.60,0:19:51.10,Dialogue,,0000,0000,0000,,Vâng.
Dialogue: 0,0:19:51.19,0:19:53.40,Dialogue,,0000,0000,0000,,Và, Kaname-san...
Dialogue: 0,0:19:53.48,0:19:55.94,Dialogue,,0000,0000,0000,,Tớ phải đặc biệt cám ơn cậu.
Dialogue: 0,0:19:56.02,0:19:59.99,Dialogue,,0000,0000,0000,,Nếu vậy thì tớ muốn cậu giải thích mọi thứ với tớ.
Dialogue: 0,0:20:00.07,0:20:02.11,Dialogue,,0000,0000,0000,,Tớ sẽ giải thích sau.
Dialogue: 0,0:20:02.20,0:20:05.20,Dialogue,,0000,0000,0000,,Bởi vì tớ cũng đuối lắm rồi.
Dialogue: 0,0:20:05.28,0:20:09.04,Dialogue,,0000,0000,0000,,Nhưng tớ có thể tuyên bố một điều với cậu không ?
Dialogue: 0,0:20:09.12,0:20:11.37,Dialogue,,0000,0000,0000,,Tuyên bố ?
Dialogue: 0,0:20:11.46,0:20:14.92,Dialogue,,0000,0000,0000,,Trung sĩ Sagara, hãy tắt tất cả hệ thống âm thanh.
Dialogue: 0,0:20:15.00,0:20:16.75,Dialogue,,0000,0000,0000,,Đây là lệnh.
Dialogue: 0,0:20:16.84,0:20:18.05,Dialogue,,0000,0000,0000,,Rõ.
Dialogue: 0,0:20:18.13,0:20:19.30,Dialogue,,0000,0000,0000,,{\i1}Gì thế? Cậu trông...{\i0}
Dialogue: 0,0:20:20.38,0:20:25.68,Dialogue,,0000,0000,0000,,Tớ có thể đã yêu anh ấy rồi.
Dialogue: 0,0:20:25.76,0:20:29.72,Dialogue,,0000,0000,0000,,Ơ, etou...Tớ... \NTessa đã yêu?!
Dialogue: 0,0:20:29.81,0:20:35.59,Dialogue,,0000,0000,0000,,Vào lúc này tớ sẽ chỉ nói rằng, chúng ta cùng cố gắng nhé, Kaname-san.
Dialogue: 0,0:20:29.81,0:20:31.59,Dialogue,,0000,0000,0000,,Tessa đã yêu rồi!
Dialogue: 0,0:20:32.10,0:20:35.98,Dialogue,,0000,0000,0000,,Ông anh này rất vui khi nghe điều đó !
Dialogue: 0,0:20:37.27,0:20:40.11,Dialogue,,0000,0000,0000,,Tessa đang yêu. Tessa đang yêu.
Dialogue: 0,0:20:40.19,0:20:43.03,Dialogue,,0000,0000,0000,,Tối nay mở tiệc thôi !
Dialogue: 0,0:20:43.11,0:20:45.28,Dialogue,,0000,0000,0000,,Chúng ta rút quân bây giờ chứ ?
Dialogue: 0,0:20:45.37,0:20:48.41,Dialogue,,0000,0000,0000,,Tôi nghe nói chú Kalinin đã an toàn.
Dialogue: 0,0:21:13.23,0:21:24.95,Songs (Romanji),,0000,0000,0000,,Kokoro ni chiisana hana ga saiteru
Dialogue: 0,0:21:25.03,0:21:36.12,Songs (Romanji),,0000,0000,0000,,Kimi kara moratta karenai hana ga
Dialogue: 0,0:21:36.21,0:21:42.13,Songs (Romanji),,0000,0000,0000,,Shinjiru koto mo kowagaranai kurai
Dialogue: 0,0:21:42.21,0:21:49.30,Songs (Romanji),,0000,0000,0000,,Tsuyoku nareta kara
Dialogue: 0,0:21:49.39,0:21:55.18,Songs (Romanji),,0000,0000,0000,,Kimi ni aete ureshikatta
Dialogue: 0,0:21:55.27,0:22:01.82,Songs (Romanji),,0000,0000,0000,,Tsunaida te ga hokoridatta
Dialogue: 0,0:22:01.90,0:22:08.41,Songs (Romanji),,0000,0000,0000,,Ima wa betsubetsu no sora miagete itemo
Dialogue: 0,0:22:08.49,0:22:17.16,Songs (Romanji),,0000,0000,0000,,Hora arukeru hitori demo
Dialogue: 0,0:21:13.23,0:21:24.95,Songs,,0000,0000,0000,,Bông hoa nhỏ trong tim em
Dialogue: 0,0:21:25.03,0:21:36.12,Songs,,0000,0000,0000,,Bông hoa không bao giờ tàn mà anh đã tặng em
Dialogue: 0,0:21:36.21,0:21:42.13,Songs,,0000,0000,0000,,Em không hề sợ hãi, thậm chí luôn tin tưởng
Dialogue: 0,0:21:42.21,0:21:49.30,Songs,,0000,0000,0000,,Đó là điều khiến em trở nên mạnh mẽ
Dialogue: 0,0:21:49.39,0:21:55.18,Songs,,0000,0000,0000,,Em rất hạnh phúc vì đã gặp anh
Dialogue: 0,0:21:55.27,0:22:01.82,Songs,,0000,0000,0000,,Em tự hào khi nắm tay anh
Dialogue: 0,0:22:01.90,0:22:08.41,Songs,,0000,0000,0000,,Dù cho hai ta hướng về bầu trời khác nhau
Dialogue: 0,0:22:08.49,0:22:17.16,Songs,,0000,0000,0000,,Anh thấy không, em có thể tự mình bước đi
Dialogue: 0,0:22:25.55,0:22:29.63,Dialogue,,0000,0000,0000,,"Bộ phim này hoàn toàn là hư cấu.\N Tên nhân vật và các tổ chức trong phim không liên quan đến bất cứ cá nhân, tổ chức nào."
Dialogue: 0,0:22:30.93,0:22:33.72,Dialogue,,0000,0000,0000,,Hãy lắng nghe chuyện của tớ. Melissa đã chọc ghẹo tớ !
Dialogue: 0,0:22:33.81,0:22:35.52,Dialogue,,0000,0000,0000,,Cô là người khơi mào trước mà.
Dialogue: 0,0:22:35.60,0:22:37.44,Dialogue,,0000,0000,0000,,Mình không thể chịu được nữa ! Hãy quyết đấu đi !
Dialogue: 0,0:22:37.52,0:22:40.73,Dialogue,,0000,0000,0000,,Tốt thôi! Tôi sẽ chăm sóc cô thật tử tế !
Dialogue: 0,0:22:40.81,0:22:45.03,Dialogue,,0000,0000,0000,,Kỳ tới Full Metal Panic: tập 13, "Con mèo và mèo Rock & Roll."
Dialogue: 0,0:22:45.11,0:22:46.69,Dialogue,,0000,0000,0000,,Thật là lo quá.
Dialogue: 0,0:22:46.69,0:22:48.69,Dialogue,,0000,0000,0000,,
