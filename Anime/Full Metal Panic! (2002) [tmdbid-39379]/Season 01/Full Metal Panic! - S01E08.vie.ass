Dialogue: 0,0:00:16.51,0:00:23.77,Songs (Romanji),,0000,0000,0000,,Futari de nigebasho sagashite
Dialogue: 0,0:00:23.85,0:00:31.40,Songs (Romanji),,0000,0000,0000,,Hashitta tenki ame no naka
Dialogue: 0,0:00:31.49,0:00:38.83,Songs (Romanji),,0000,0000,0000,,Tatoeba nanika wo ushinau toshite mo
Dialogue: 0,0:00:38.91,0:00:47.67,Songs (Romanji),,0000,0000,0000,,Mamotte ikanakya hitotsu dake wa
Dialogue: 0,0:00:47.75,0:00:54.80,Songs (Romanji),,0000,0000,0000,,Kono sekai ni umareta sono imi wo
Dialogue: 0,0:00:54.88,0:01:00.43,Songs (Romanji),,0000,0000,0000,,Kimi to mitsuke ni yukou
Dialogue: 0,0:01:00.52,0:01:05.64,Songs (Romanji),,0000,0000,0000,,Itami sae mo kakaenagara
Dialogue: 0,0:01:05.73,0:01:12.78,Songs (Romanji),,0000,0000,0000,,Atarashii keshiki mukae ni yukou
Dialogue: 0,0:00:16.51,0:00:23.77,Songs,,0000,0000,0000,,Hai chúng ta đang tìm một nơi để trốn thoát
Dialogue: 0,0:00:23.85,0:00:31.40,Songs,,0000,0000,0000,,Cùng chạy dưới ánh nắng chói chang
Dialogue: 0,0:00:31.49,0:00:38.83,Songs,,0000,0000,0000,,Ngay cả khi em mất một điều gì khác
Dialogue: 0,0:00:38.91,0:00:47.67,Songs,,0000,0000,0000,,Thì em chỉ muốn giữ lấy một điều duy nhất
Dialogue: 0,0:00:47.75,0:00:54.80,Songs,,0000,0000,0000,,Ý nghĩa khi được sinh ra ở thế giới này
Dialogue: 0,0:00:54.88,0:01:00.43,Songs,,0000,0000,0000,,Hãy đi cùng em và tìm hiểu
Dialogue: 0,0:01:00.52,0:01:05.64,Songs,,0000,0000,0000,,Giữ chặt lấy nó, dù cho là nỗi đau
Dialogue: 0,0:01:05.73,0:01:12.78,Songs,,0000,0000,0000,,Cùng tiến lên đón chào thế giới mới
Dialogue: 0,0:01:15.53,0:01:19.88,Dialogue,,0000,0000,0000,,Translator: MaHiME
Dialogue: 0,0:01:23.88,0:01:29.88,Dialogue,,0000,0000,0000,,Waya fansub presents
Dialogue: 0,0:01:30.45,0:01:35.01,Dialogue,,0000,0000,0000,,Xin lỗi, chúng ta không thể cùng nhau trở về.
Dialogue: 0,0:01:35.09,0:01:37.38,Dialogue,,0000,0000,0000,,Tớ không hề hối hận.
Dialogue: 0,0:01:37.47,0:01:40.43,Dialogue,,0000,0000,0000,,Tớ rất vui vì đã gặp cậu, Sagara-kun.
Dialogue: 0,0:01:49.10,0:01:50.85,Dialogue,,0000,0000,0000,,"Part Time Steady"
Dialogue: 0,0:01:53.11,0:01:54.86,Dialogue,,0000,0000,0000,,Trời sáng rồi!
Dialogue: 0,0:01:54.94,0:01:56.99,Dialogue,,0000,0000,0000,,Dậy đi!
Dialogue: 0,0:01:57.07,0:01:59.41,Dialogue,,0000,0000,0000,,Kana-chan, cô sẽ trễ học đấy!
Dialogue: 0,0:02:12.59,0:02:14.51,Dialogue,,0000,0000,0000,,Được, hoàn hảo!
Dialogue: 0,0:02:21.10,0:02:23.10,Dialogue,,0000,0000,0000,,Tốt! Không có vấn đề gì.
Dialogue: 0,0:02:24.18,0:02:27.35,Dialogue,,0000,0000,0000,,Mẹ, con đi nhé.
Dialogue: 0,0:02:31.06,0:02:32.69,Dialogue,,0000,0000,0000,,Tôi đi đây.
Dialogue: 0,0:02:35.57,0:02:39.15,Dialogue,,0000,0000,0000,,Được rồi, mình có bài kiểm tra tiếng Nhật cổ ở tiết đầu.
Dialogue: 0,0:02:42.99,0:02:45.66,Dialogue,,0000,0000,0000,,Chidori-san...
Dialogue: 0,0:02:45.75,0:02:47.16,Dialogue,,0000,0000,0000,,Ờ, chào buổi sáng.
Dialogue: 0,0:02:47.25,0:02:50.75,Dialogue,,0000,0000,0000,,Thôi mà, cậu đã suy nghĩ về những gì tớ nói hôm qua chưa ?
Dialogue: 0,0:02:50.83,0:02:52.29,Dialogue,,0000,0000,0000,,Suy nghĩ về cái gì ?
Dialogue: 0,0:02:52.38,0:02:54.92,Dialogue,,0000,0000,0000,,Tớ nói là tớ muốn làm bạn trai của cậu.
Dialogue: 0,0:02:55.00,0:02:56.34,Dialogue,,0000,0000,0000,,À, chuyện đó à.
Dialogue: 0,0:02:56.42,0:02:58.76,Dialogue,,0000,0000,0000,,Không, từ chối, bác bỏ, không có tý cảm giác, hết.
Dialogue: 0,0:02:58.84,0:03:01.76,Dialogue,,0000,0000,0000,,Đừng nói thế mà. Nè, Chidori-san.
Dialogue: 0,0:03:01.85,0:03:05.43,Dialogue,,0000,0000,0000,,Cậu dai quá đấy. Tôi đã nói là tôi không muốn.
Dialogue: 0,0:03:06.56,0:03:09.10,Dialogue,,0000,0000,0000,,Một tên khả nghi.
Dialogue: 0,0:03:09.19,0:03:10.89,Dialogue,,0000,0000,0000,,Sousuke, chào buổi sáng.
Dialogue: 0,0:03:10.98,0:03:12.69,Dialogue,,0000,0000,0000,,Chidori, tên này là ai ?
Dialogue: 0,0:03:12.77,0:03:14.44,Dialogue,,0000,0000,0000,,Shirai-kun ở lớp 2.
Dialogue: 0,0:03:14.52,0:03:17.65,Dialogue,,0000,0000,0000,,Hắn chỉ là dân thường, thả hắn ra đi.
Dialogue: 0,0:03:17.74,0:03:18.69,Dialogue,,0000,0000,0000,,Cô chắc chứ ?
Dialogue: 0,0:03:18.78,0:03:20.24,Dialogue,,0000,0000,0000,,Chắc chắn.
Dialogue: 0,0:03:20.32,0:03:24.53,Dialogue,,0000,0000,0000,,Lần này tôi để cậu đi nhưng mà nếu như còn tái phạm thì cậu sẽ phải hối hận đấy.
Dialogue: 0,0:03:24.62,0:03:28.87,Dialogue,,0000,0000,0000,,Kể cả gia đình của cậu. Hiểu rõ chứ?
Dialogue: 0,0:03:28.96,0:03:35.25,Dialogue,,0000,0000,0000,,Thiệt tình, ước gì cậu có thể can thiệp bằng cách khác.
Dialogue: 0,0:03:35.34,0:03:37.13,Dialogue,,0000,0000,0000,,Tôi chỉ cảnh cáo hắn ta thôi.
Dialogue: 0,0:03:37.21,0:03:40.13,Dialogue,,0000,0000,0000,,Rồi, rồi, cảm ơn cậu.
Dialogue: 0,0:03:40.22,0:03:41.59,Dialogue,,0000,0000,0000,,Thôi, chúng ta đi nhanh nào.
Dialogue: 0,0:03:41.68,0:03:43.59,Dialogue,,0000,0000,0000,,Tiết đầu là tiếng Nhật cổ đấy.
Dialogue: 0,0:03:43.68,0:03:45.89,Dialogue,,0000,0000,0000,,Tôi quên mất.
Dialogue: 0,0:03:45.97,0:03:49.93,Dialogue,,0000,0000,0000,,Tại sao vậy? Tớ sẽ chia tay với bạn gái của mình.
Dialogue: 0,0:03:50.02,0:03:51.98,Dialogue,,0000,0000,0000,,Chidori-san.
Dialogue: 0,0:03:58.28,0:04:02.07,Dialogue,,0000,0000,0000,,Tớ có cảm giác rằng ai đó đang theo dõi mình cả ngày hôm nay.
Dialogue: 0,0:04:02.16,0:04:03.99,Dialogue,,0000,0000,0000,,Ai đó đang theo dõi cậu ? Con trai à ?
Dialogue: 0,0:04:04.07,0:04:05.03,Dialogue,,0000,0000,0000,,Tớ không biết.
Dialogue: 0,0:04:05.12,0:04:09.04,Dialogue,,0000,0000,0000,,Nó khó giải thích lắm, giống như là bị tê vai vậy.
Dialogue: 0,0:04:13.00,0:04:14.92,Dialogue,,0000,0000,0000,,Cậu làm gì vậy?
Dialogue: 0,0:04:15.00,0:04:17.46,Dialogue,,0000,0000,0000,,Kana-chan! không hay rồi! Sagara-kun đang...
Dialogue: 0,0:04:18.00,0:04:18.45,Signs,,0000,0000,0000,,"Kaname Chidori ở lớp 4 đã bắt nữ sinh khác về nhà cô ta và hành hạ cô ấy ."
Dialogue: 0,0:04:18.46,0:04:19.13,Signs,,0000,0000,0000,,"Kaname Chidori sống một mình và cô đơn. Cô ta cho phép bất cứ ai ở qua đêm với mình."
Dialogue: 0,0:04:19.17,0:04:19.80,Signs,,0000,0000,0000,,"Kaname Chidori năm 2, lớp 4, đang đeo chiếc đồng hồ Cartier đã được tặng bởi chủ tịch của công ty mà cô đang hẹn hò."
Dialogue: 0,0:04:19.84,0:04:23.13,Dialogue,,0000,0000,0000,,Cậu đã chỉ cho Sagara-kun xem những dòng chữ trên tường này à ?
Dialogue: 0,0:04:22.13,0:04:23.13,Dialogue,,0000,0000,0000,,{\i1}Uhm.{\i0}
Dialogue: 0,0:04:24.43,0:04:27.22,Dialogue,,0000,0000,0000,,Các em! Không được chạy trên hành lang!
Dialogue: 0,0:04:27.31,0:04:28.93,Dialogue,,0000,0000,0000,,Cứu tôi với!
Dialogue: 0,0:04:29.02,0:04:34.06,Dialogue,,0000,0000,0000,,Ngươi không chỉ ngu ngốc lờ đi những cảnh báo mà còn lan truyền tin đồn thất thiệt về cô ấy nữa.
Dialogue: 0,0:04:35.40,0:04:37.65,Dialogue,,0000,0000,0000,,Kazama-kun, Sousuke đâu rồi?
Dialogue: 0,0:04:37.73,0:04:38.73,Dialogue,,0000,0000,0000,,Nh-nh-nh...
Dialogue: 0,0:04:38.82,0:04:40.23,Dialogue,,0000,0000,0000,,Nhà vệ sinh nam?
Dialogue: 0,0:04:40.32,0:04:43.74,Dialogue,,0000,0000,0000,,Tớ thật sự không biết gì cả. Hãy tin tớ!
Dialogue: 0,0:04:45.99,0:04:47.45,Dialogue,,0000,0000,0000,,Sousuke!
Dialogue: 0,0:04:57.34,0:05:01.92,Dialogue,,0000,0000,0000,,Ôi... mình đã bị ô uế mất rồi.
Dialogue: 0,0:05:02.01,0:05:04.26,Dialogue,,0000,0000,0000,,Đây không phải là lúc để nghĩ chuyện đó!
Dialogue: 0,0:05:04.34,0:05:05.34,Dialogue,,0000,0000,0000,,Sousuke, cậu...
Dialogue: 0,0:05:05.43,0:05:07.72,Dialogue,,0000,0000,0000,,Chidori, nhà vệ sinh nữ ở kế bên.
Dialogue: 0,0:05:07.80,0:05:09.51,Dialogue,,0000,0000,0000,,Tớ biết!
Dialogue: 0,0:05:09.60,0:05:11.72,Dialogue,,0000,0000,0000,,Cậu đấy...
Dialogue: 0,0:05:10.60,0:05:11.72,Dialogue,,0000,0000,0000,,{\i1}Dừng lại đi!{\i0}
Dialogue: 0,0:05:15.19,0:05:17.81,Dialogue,,0000,0000,0000,,Này, các người đang làm gì Shirai của tôi thế?
Dialogue: 0,0:05:17.90,0:05:20.40,Dialogue,,0000,0000,0000,,Cố lên nào, anh yêu!
Dialogue: 0,0:05:20.48,0:05:21.48,Dialogue,,0000,0000,0000,,Anh yêu?!
Dialogue: 0,0:05:21.57,0:05:24.11,Dialogue,,0000,0000,0000,,Phải! Chúng tôi đang yêu nhau say đắm!
Dialogue: 0,0:05:24.20,0:05:25.86,Dialogue,,0000,0000,0000,,Đang yêu?!
Dialogue: 0,0:05:25.95,0:05:27.45,Dialogue,,0000,0000,0000,,Cô ấy là ai thế?
Dialogue: 0,0:05:27.53,0:05:28.32,Dialogue,,0000,0000,0000,,Ai biết.
Dialogue: 0,0:05:28.41,0:05:30.16,Dialogue,,0000,0000,0000,,Mizuki!
Dialogue: 0,0:05:30.24,0:05:32.45,Dialogue,,0000,0000,0000,,Tại sao cô lại đến đây?
Dialogue: 0,0:05:32.54,0:05:36.75,Dialogue,,0000,0000,0000,,Shirai-kun, cậu nói gì vậy ?
Dialogue: 0,0:05:36.83,0:05:39.71,Dialogue,,0000,0000,0000,,Mizuki...
Dialogue: 0,0:05:39.79,0:05:41.75,Dialogue,,0000,0000,0000,,Cô thật là phiền phức.
Dialogue: 0,0:05:44.59,0:05:46.17,Dialogue,,0000,0000,0000,,Shirai-kun!
Dialogue: 0,0:05:49.10,0:05:50.30,Dialogue,,0000,0000,0000,,Đang yêu?
Dialogue: 0,0:05:50.39,0:05:52.89,Dialogue,,0000,0000,0000,,Có nghĩa cô ta là bạn gái của Shirai ?
Dialogue: 0,0:05:52.97,0:05:55.52,Dialogue,,0000,0000,0000,,Đúng lúc lắm, tôi sẽ dùng cô ta như là công cụ để thẩm vấn.
Dialogue: 0,0:06:06.11,0:06:10.16,Dialogue,,0000,0000,0000,,Sousuke-kun, anh có thể giúp em một việc được không ?
Dialogue: 0,0:06:11.95,0:06:13.08,Dialogue,,0000,0000,0000,,Cậu đang làm gì thế?
Dialogue: 0,0:06:13.16,0:06:15.16,Dialogue,,0000,0000,0000,,Tớ đang để cậu ấy chơi gal-game.
Dialogue: 0,0:06:15.25,0:06:19.37,Dialogue,,0000,0000,0000,,Cậu ấy đã có quãng thời gian khó khăn để có thể hiểu về tình yêu giữa nam nữ của thiếu niên Nhật Bản.
Dialogue: 0,0:06:19.46,0:06:23.25,Dialogue,,0000,0000,0000,,Cậu ta bị ngốc à? Cô ta bị Shirai đá rồi.
Dialogue: 0,0:06:23.34,0:06:25.09,Dialogue,,0000,0000,0000,,Nó còn xảy ra trong nhà vệ sinh nữa chứ.
Dialogue: 0,0:06:25.17,0:06:27.17,Dialogue,,0000,0000,0000,,Sousuke-kun không tốt với em gì hết.
Dialogue: 0,0:06:27.26,0:06:29.55,Dialogue,,0000,0000,0000,,Sousuke, cậu đã làm gì thế ?
Dialogue: 0,0:06:29.64,0:06:32.01,Dialogue,,0000,0000,0000,,Cô ta nói muốn đi shopping để mua đồ bơi...
Dialogue: 0,0:06:32.10,0:06:33.89,Dialogue,,0000,0000,0000,,vì vậy tôi nói với cô ta "hãy tự đi mà mua".
Dialogue: 0,0:06:33.97,0:06:36.43,Dialogue,,0000,0000,0000,,Thế rồi tự nhiên cô ta nổi giận.
Dialogue: 0,0:06:36.52,0:06:38.69,Dialogue,,0000,0000,0000,,Tôi thật sự không thể hiểu.
Dialogue: 0,0:06:38.77,0:06:42.98,Dialogue,,0000,0000,0000,,Này nhé, cô bé muốn cậu chọn đồ bơi cho cô ấy.
Dialogue: 0,0:06:43.07,0:06:48.49,Dialogue,,0000,0000,0000,,Tôi có thể cho cô ta lời khuyên về các loại quần áo quân sự nhưng còn thường phục thì tôi chịu thua.
Dialogue: 0,0:06:48.57,0:06:50.28,Dialogue,,0000,0000,0000,,Đó là lý do tại sao tôi từ chối.
Dialogue: 0,0:06:50.36,0:06:52.37,Dialogue,,0000,0000,0000,,Vậy thì tại sao cô ta lại nổi giận chứ?
Dialogue: 0,0:06:52.47,0:06:54.87,Dialogue,,0000,0000,0000,,Sousuke-kun là một otaku sao?
Dialogue: 0,0:06:54.95,0:06:57.54,Dialogue,,0000,0000,0000,,Tôi không phải là otaku. Tôi là một chuyên gia!
Dialogue: 0,0:06:59.37,0:07:02.96,Dialogue,,0000,0000,0000,,Chờ đã, nếu cô đơn phương chấm dứt đàm phán thì có thể sẽ dẫn đến chiến tranh.
Dialogue: 0,0:07:03.04,0:07:04.21,Dialogue,,0000,0000,0000,,Hãy chấp nhận đàm phán!
Dialogue: 0,0:07:04.30,0:07:08.26,Dialogue,,0000,0000,0000,,Tôi sẽ lắng nghe những gì cô nói. Chúng ta nên thỏa hiệp một chút.
Dialogue: 0,0:07:09.30,0:07:11.18,Dialogue,,0000,0000,0000,,Chidori và những người khác đâu rồi ?
Dialogue: 0,0:07:11.26,0:07:13.39,Dialogue,,0000,0000,0000,,Tớ đoán là họ đã bó tay với cậu.
Dialogue: 0,0:07:13.47,0:07:15.76,Dialogue,,0000,0000,0000,,Tôi không hiểu. Tại sao?
Dialogue: 0,0:07:35.37,0:07:39.12,Dialogue,,0000,0000,0000,,Tớ nhịn đủ rồi! Sao cậu không đứng kế bên tớ ?
Dialogue: 0,0:07:39.21,0:07:41.21,Dialogue,,0000,0000,0000,,Chúng ta chỉ chờ xe điện ngầm thôi mà.
Dialogue: 0,0:07:41.29,0:07:43.04,Dialogue,,0000,0000,0000,,Nhiệm vụ của tôi là bảo vệ cô.
Dialogue: 0,0:07:43.13,0:07:45.92,Dialogue,,0000,0000,0000,,Nhưng mà từ lúc đó đến giờ có xảy ra chuyện gì đâu.
Dialogue: 0,0:07:46.00,0:07:51.38,Dialogue,,0000,0000,0000,,Chờ đợi cho đến khi mục tiêu mất cảnh giác sau đó tấn công chính là cách thức cơ bản của bọn khủng bố.
Dialogue: 0,0:07:51.47,0:07:53.43,Dialogue,,0000,0000,0000,,Ngày mai là bắt đầu "Tuần Lễ Vàng" rồi.
Dialogue: 0,0:07:53.51,0:07:55.26,Dialogue,,0000,0000,0000,,Sao mà mình cảm thấy uể oải thế này.
Dialogue: 0,0:07:55.35,0:07:57.14,Dialogue,,0000,0000,0000,,Cái gì? Tuần Lễ Vàng à ?
Dialogue: 0,0:07:57.22,0:07:58.72,Dialogue,,0000,0000,0000,,Thế thì sao ?
Dialogue: 0,0:07:58.81,0:08:01.23,Dialogue,,0000,0000,0000,,Hãy tránh xa chỗ đông người khi cô ra ngoài.
Dialogue: 0,0:08:01.25,0:08:02.77,Dialogue,,0000,0000,0000,,Nếu không sẽ khó cho việc bảo vệ cô.
Dialogue: 0,0:08:02.85,0:08:05.11,Dialogue,,0000,0000,0000,,Cậu sẽ theo tớ suốt cả kỳ nghỉ sao ?
Dialogue: 0,0:08:05.19,0:08:06.73,Dialogue,,0000,0000,0000,,Không thành vấn đề với tôi.
Dialogue: 0,0:08:08.28,0:08:10.69,Dialogue,,0000,0000,0000,,Vâng, đây là Shirai.
Dialogue: 0,0:08:10.78,0:08:15.28,Dialogue,,0000,0000,0000,,Tôi muốn đặt 10 phần cà ri lớn.
Dialogue: 0,0:08:15.37,0:08:18.74,Dialogue,,0000,0000,0000,,Xin chào, tôi là Shirai.
Dialogue: 0,0:08:18.83,0:08:21.12,Dialogue,,0000,0000,0000,,Tôi muốn đặt 10 phần mì cùng với tàu hủ chiên.
Dialogue: 0,0:08:21.21,0:08:23.46,Dialogue,,0000,0000,0000,,Xin chào, tôi là Shirai.
Dialogue: 0,0:08:23.54,0:08:24.58,Dialogue,,0000,0000,0000,,Cô ta đang làm gì thế?
Dialogue: 0,0:08:24.67,0:08:28.09,Dialogue,,0000,0000,0000,,Shirai tổ chức tiệc với bọn khủng bố à ?
Dialogue: 0,0:08:29.21,0:08:33.76,Dialogue,,0000,0000,0000,,Tất cả là lỗi của cô! Shirai-kun đã bỏ tôi.
Dialogue: 0,0:08:33.84,0:08:38.35,Dialogue,,0000,0000,0000,,Khoan đã nào! Những cú điện thoại nãy giờ là để trả thù ư ?
Dialogue: 0,0:08:39.14,0:08:41.85,Dialogue,,0000,0000,0000,,Tôi thấy khá hơn rồi. Tôi không thèm quan tâm đến Shirai nữa.
Dialogue: 0,0:08:41.93,0:08:46.19,Dialogue,,0000,0000,0000,,Nhưng thay vào đó, Sagara Sousuke, cậu phải hẹn hò với tôi vào ngày mai!
Dialogue: 0,0:08:51.99,0:08:54.07,Dialogue,,0000,0000,0000,,Nhưng mà tại sao lại ở đây ?
Dialogue: 0,0:08:54.16,0:08:56.07,Dialogue,,0000,0000,0000,,Chúng ta sẽ thực tập trong đêm nay.
Dialogue: 0,0:08:56.16,0:08:59.91,Dialogue,,0000,0000,0000,,Tôi không thể để con trai qua đêm ở nhà mình, ba tôi sẽ giết tôi mất.
Dialogue: 0,0:08:59.99,0:09:03.91,Dialogue,,0000,0000,0000,,Shirai Satoru không chỉ tỏ tình với Chidori mà còn với một số nữ sinh khác.
Dialogue: 0,0:09:04.00,0:09:08.59,Dialogue,,0000,0000,0000,,Và trên hết, hắn ta có thể dễ dàng thực hiện một chiến thuật phức tạp và cao cấp để đá bạn gái của mình.
Dialogue: 0,0:09:08.67,0:09:12.05,Dialogue,,0000,0000,0000,,Có vẻ như hắn khó đối phó hơn là tôi tưởng.
Dialogue: 0,0:09:12.13,0:09:14.42,Dialogue,,0000,0000,0000,,Hắn ta chỉ làm trò mà thôi.
Dialogue: 0,0:09:14.51,0:09:17.55,Dialogue,,0000,0000,0000,,Nhưng mà tại sao Sousuke lại phải hẹn hò với cô?
Dialogue: 0,0:09:17.64,0:09:19.68,Dialogue,,0000,0000,0000,,Tôi đã hứa với những người bạn cũ ở trung học là...
Dialogue: 0,0:09:19.76,0:09:22.72,Dialogue,,0000,0000,0000,,sẽ giới thiệu bạn trai của mình vào ngày mai.
Dialogue: 0,0:09:22.81,0:09:26.23,Dialogue,,0000,0000,0000,,Tôi không quan tâm chuyện khác miễn là có thể giữ được thể diện.
Dialogue: 0,0:09:26.31,0:09:28.77,Dialogue,,0000,0000,0000,,Cậu ấy không hợp thời trang nhưng mặt mũi cũng đẹp trai.
Dialogue: 0,0:09:28.86,0:09:34.07,Dialogue,,0000,0000,0000,,Và cũng là lỗi của cô khiến tôi và Shirai chia tay.
Dialogue: 0,0:09:34.15,0:09:36.45,Dialogue,,0000,0000,0000,,Cô không nghĩ là ít nhất nên làm điều này cho tôi?
Dialogue: 0,0:09:36.53,0:09:40.33,Dialogue,,0000,0000,0000,,Cô chỉ đang trả đũa thôi.
Dialogue: 0,0:09:40.41,0:09:42.33,Dialogue,,0000,0000,0000,,Được rồi, tôi sẽ hẹn hò với cô.
Dialogue: 0,0:09:42.41,0:09:43.75,Dialogue,,0000,0000,0000,,Không, cậu không được!
Dialogue: 0,0:09:43.83,0:09:48.71,Dialogue,,0000,0000,0000,,Sao cô lại phản đối? Cậu ta có làm gì cũng đâu liên quan đến cô.
Dialogue: 0,0:09:48.79,0:09:50.54,Dialogue,,0000,0000,0000,,Đúng là thế, nhưng mà...
Dialogue: 0,0:09:50.63,0:09:53.59,Dialogue,,0000,0000,0000,,Hôm nay tôi đã thất bại trong gal-game.
Dialogue: 0,0:09:53.67,0:09:56.59,Dialogue,,0000,0000,0000,,Chỉ có một lý do duy nhất, đó là tôi không biết về game trong đời thực.
Dialogue: 0,0:09:56.68,0:09:58.55,Dialogue,,0000,0000,0000,,Thời nay, chiến tranh phụ thuộc vào lượng thông tin mà ta có được.
Dialogue: 0,0:09:58.64,0:10:00.72,Dialogue,,0000,0000,0000,,Tổ chức nào nắm nhiều thông tin hơn sẽ thắng.
Dialogue: 0,0:10:00.81,0:10:03.18,Dialogue,,0000,0000,0000,,Việc thu thập thông tin là rất quan trọng.
Dialogue: 0,0:10:05.18,0:10:07.64,Dialogue,,0000,0000,0000,,Có gì xảy ra thì đừng có trách tớ.
Dialogue: 0,0:10:13.78,0:10:18.61,Dialogue,,0000,0000,0000,,Vậy cậu thường mua quần hiệu gì gần đây?
Dialogue: 0,0:10:18.70,0:10:23.24,Dialogue,,0000,0000,0000,,Trang bị cơ bản của tôi là áo sơ mi da màu đen của Harry Hower kết hợp với...
Dialogue: 0,0:10:23.32,0:10:28.04,Dialogue,,0000,0000,0000,,quần chino màu đen để đạt được độ ẩn thân cao nhất.
Dialogue: 0,0:10:28.12,0:10:31.42,Dialogue,,0000,0000,0000,,Khúc sau nghe có vẻ quái đản nhưng vậy cũng được rồi.
Dialogue: 0,0:10:31.50,0:10:33.25,Dialogue,,0000,0000,0000,,Tôi mua những chất liệu đắt tiền cho trang bị.
Dialogue: 0,0:10:33.34,0:10:36.92,Dialogue,,0000,0000,0000,,Gần đây, tôi đã mua áo vest đắt tiền của Hurberry.
Dialogue: 0,0:10:37.01,0:10:42.22,Dialogue,,0000,0000,0000,,Giá của nó bằng với khẩu súng trường Steyr AUG mà quân đội Áo đang sử dụng...
Dialogue: 0,0:10:42.35,0:10:46.52,Dialogue,,0000,0000,0000,,và bằng với 6 viên đạn pháo 40mm chống AS.
Dialogue: 0,0:10:45.00,0:10:46.52,Dialogue,,0000,0000,0000,,{\i1}Cậu không cần phải trình bày những thứ kỳ lạ như thế!{\i0}
Dialogue: 0,0:10:46.60,0:10:48.14,Dialogue,,0000,0000,0000,,Còn những kỹ năng đặc biệt của cậu là gì ?
Dialogue: 0,0:10:48.23,0:10:51.86,Dialogue,,0000,0000,0000,,Trinh sát, ném bom và phi công AS.
Dialogue: 0,0:10:51.94,0:10:55.15,Dialogue,,0000,0000,0000,,Không phải cậu! Những kỹ năng của Shirai-kun.
Dialogue: 0,0:10:55.23,0:10:56.90,Dialogue,,0000,0000,0000,,Quan hệ tình dục không lành mạnh và...
Dialogue: 0,0:10:56.99,0:10:59.86,Dialogue,,0000,0000,0000,,Ai lại nói với người khác rằng họ làm tốt những thứ không lành mạnh đó.
Dialogue: 0,0:10:59.95,0:11:02.66,Dialogue,,0000,0000,0000,,Thử trượt tuyết và bóng rổ đi.
Dialogue: 0,0:11:06.08,0:11:08.04,Dialogue,,0000,0000,0000,,We did it!
Dialogue: 0,0:11:09.54,0:11:12.33,Dialogue,,0000,0000,0000,,Tôi có một số kinh nghiệm đối với bóng rổ.
Dialogue: 0,0:11:12.42,0:11:15.84,Dialogue,,0000,0000,0000,,Khi tôi còn ở Helmajistan, tôi đã sử dụng RK92 làm rổ.
Dialogue: 0,0:11:15.92,0:11:20.09,Dialogue,,0000,0000,0000,,Đừng nói những thứ vô nghĩa như Helma hoặc RK gì đó chứ !
Dialogue: 0,0:11:21.89,0:11:25.64,Dialogue,,0000,0000,0000,,Nhìn này, Shirai-kun, lần tới chúng ta sẽ hẹn hò ở đâu ?
Dialogue: 0,0:11:25.72,0:11:27.18,Dialogue,,0000,0000,0000,,Họ vẫn còn tập à.
Dialogue: 0,0:11:27.27,0:11:30.31,Dialogue,,0000,0000,0000,,Tôi muốn đi xem phim.
Dialogue: 0,0:11:28.87,0:11:30.31,Dialogue,,0000,0000,0000,,Vậy anh muốn xem phim gì ?
Dialogue: 0,0:11:30.39,0:11:31.98,Dialogue,,0000,0000,0000,,Jogging Man 2.
Dialogue: 0,0:11:32.06,0:11:36.02,Dialogue,,0000,0000,0000,,Tôi nghe nói rằng nó mô tả việc hacking rất thực tế và đầy những pha hồi hộp.
Dialogue: 0,0:11:36.11,0:11:42.61,Dialogue,,0000,0000,0000,,Nhưng tôi nghi ngờ việc một hacker thường dân có thể sử dụng máy vi tính để đột nhập vào Bộ Quốc Phòng Mỹ.
Dialogue: 0,0:11:42.70,0:11:44.20,Dialogue,,0000,0000,0000,,Anh đang nói về cái gì thế ?
Dialogue: 0,0:11:44.28,0:11:46.49,Dialogue,,0000,0000,0000,,Biết ngay mà.
Dialogue: 0,0:11:46.58,0:11:49.37,Dialogue,,0000,0000,0000,,Em không hiểu. Nghiêm túc đi mà!
Dialogue: 0,0:11:49.46,0:11:52.83,Dialogue,,0000,0000,0000,,Tôi luôn nghiêm túc. Cô hỏi thêm gì khác đi.
Dialogue: 0,0:11:52.92,0:11:56.42,Dialogue,,0000,0000,0000,,Vậy thì... Shirai-kun, anh có yêu em không?
Dialogue: 0,0:11:57.55,0:11:58.92,Dialogue,,0000,0000,0000,,Cô ta đang nói cái gì thế ?
Dialogue: 0,0:11:59.01,0:12:01.22,Dialogue,,0000,0000,0000,,Hãy làm nhẹ nhàng như thường lệ.
Dialogue: 0,0:12:01.30,0:12:04.55,Dialogue,,0000,0000,0000,,À! Xem nào... anh yêu em, Mizuki.
Dialogue: 0,0:12:04.64,0:12:07.97,Dialogue,,0000,0000,0000,,Chỉ là tập luyện thôi. Tập luyện, tập luyện!
Dialogue: 0,0:12:08.06,0:12:10.14,Dialogue,,0000,0000,0000,,Nói nữa đi mà, Shirai-kun.
Dialogue: 0,0:12:10.23,0:12:11.56,Dialogue,,0000,0000,0000,,Anh yêu em, Mizuki.
Dialogue: 0,0:12:11.64,0:12:12.56,Dialogue,,0000,0000,0000,,Nữa đi!
Dialogue: 0,0:12:12.65,0:12:14.77,Dialogue,,0000,0000,0000,,Anh yêu em, Mizuki.
Dialogue: 0,0:12:14.86,0:12:19.28,Dialogue,,0000,0000,0000,,Shirai-kun, anh vẫn còn yêu em chứ?
Dialogue: 0,0:12:19.36,0:12:21.49,Dialogue,,0000,0000,0000,,Anh vẫn luôn yêu em, Mizuki.
Dialogue: 0,0:12:21.57,0:12:24.74,Dialogue,,0000,0000,0000,,Anh sẽ mãi mãi yêu em chứ?
Dialogue: 0,0:12:24.82,0:12:28.12,Dialogue,,0000,0000,0000,,Phải, anh mãi mãi yêu em, Mizuki.
Dialogue: 0,0:12:31.54,0:12:34.50,Dialogue,,0000,0000,0000,,Im hết đi! Tôi không thể ngủ được.
Dialogue: 0,0:12:37.75,0:12:40.13,Dialogue,,0000,0000,0000,,Chuyện gì thế? Sao cô lại khóc ?
Dialogue: 0,0:12:40.21,0:12:43.38,Dialogue,,0000,0000,0000,,Im đi! Tôi ghét cậu.
Dialogue: 0,0:12:43.47,0:12:44.80,Dialogue,,0000,0000,0000,,Nhưng mà vừa nãy cô vẫn...
Dialogue: 0,0:12:44.89,0:12:49.64,Dialogue,,0000,0000,0000,,Đã bảo là cậu im đi! Đừng nhìn tôi!
Dialogue: 0,0:12:49.72,0:12:51.68,Dialogue,,0000,0000,0000,,Cô ta thật khó hiểu.
Dialogue: 0,0:12:54.90,0:12:56.52,Dialogue,,0000,0000,0000,,À, họ đến kìa.
Dialogue: 0,0:12:56.61,0:12:58.19,Dialogue,,0000,0000,0000,,Đã lâu không gặp, Mizuki!
Dialogue: 0,0:12:58.27,0:13:00.61,Dialogue,,0000,0000,0000,,Đôi giày của cậu dễ thương quá.
Dialogue: 0,0:13:00.27,0:13:01.61,Dialogue,,0000,0000,0000,,Cậu giảm cân rồi à ?
Dialogue: 0,0:13:01.69,0:13:06.32,Dialogue,,0000,0000,0000,,Thế à? Đây là bạn của tớ, Kaname.
Dialogue: 0,0:13:06.41,0:13:08.45,Dialogue,,0000,0000,0000,,Và họ là, từ phải sang:
Dialogue: 0,0:13:08.53,0:13:13.58,Dialogue,,0000,0000,0000,,Akagi Manami, Tsuge Madoka và Midorikawa Shouko.
Dialogue: 0,0:13:13.66,0:13:16.62,Dialogue,,0000,0000,0000,,Họ giống như đèn giao thông vậy.
Dialogue: 0,0:13:16.71,0:13:20.67,Dialogue,,0000,0000,0000,,Vậy, bạn trai của cậu đâu ?
Dialogue: 0,0:13:20.75,0:13:24.47,Dialogue,,0000,0000,0000,,Tôi là Shirai Satoru.
Dialogue: 0,0:13:24.55,0:13:25.76,Dialogue,,0000,0000,0000,,Rất vui được gặp các cậu.
Dialogue: 0,0:13:27.30,0:13:29.72,Dialogue,,0000,0000,0000,,Ngồi bên cửa sổ đối diện con đường thì rất nguy hiểm.
Dialogue: 0,0:13:29.81,0:13:31.47,Dialogue,,0000,0000,0000,,Tôi cũng không thể thấy cửa ra vào.
Dialogue: 0,0:13:31.56,0:13:33.31,Dialogue,,0000,0000,0000,,Nguy hiểm chỗ nào?
Dialogue: 0,0:13:33.39,0:13:34.64,Dialogue,,0000,0000,0000,,Trước kia, một đồng đội của tôi...
Dialogue: 0,0:13:34.73,0:13:39.40,Dialogue,,0000,0000,0000,,À không, giáo viên trường cao trung của tôi đã bị tấn công trong giờ ăn.
Dialogue: 0,0:13:39.48,0:13:41.52,Dialogue,,0000,0000,0000,,Anh ta đã bị một vết sẹo từ viên đạn 9mm xuyên qua vai phải của mình.
Dialogue: 0,0:13:41.61,0:13:44.65,Dialogue,,0000,0000,0000,,Thế à? Shira-kun, anh đang nói về cái gì thế?
Dialogue: 0,0:13:44.74,0:13:48.57,Dialogue,,0000,0000,0000,,Tớ có ấn tượng về Shirai-san khác với câu chuyện mà Mizuki kể.
Dialogue: 0,0:13:48.66,0:13:51.08,Dialogue,,0000,0000,0000,,Cậu ấy giống như khá đơn giản và mạnh mẽ.
Dialogue: 0,0:13:51.16,0:13:53.62,Dialogue,,0000,0000,0000,,Đó là giả thuyết không chính xác.
Dialogue: 0,0:13:53.70,0:13:58.12,Dialogue,,0000,0000,0000,,Tôi rất thích mặc những bộ thời trang phi thực tế.
Dialogue: 0,0:13:58.21,0:14:01.67,Dialogue,,0000,0000,0000,,Tôi tìm thấy nó, một niềm vui tuyệt vời để giết thời gian với phụ nữ.
Dialogue: 0,0:14:01.75,0:14:03.30,Dialogue,,0000,0000,0000,,Tôi là mẫu người như thế.
Dialogue: 0,0:14:03.38,0:14:05.59,Dialogue,,0000,0000,0000,,Nhưng trông cậu không giống như thế.
Dialogue: 0,0:14:05.67,0:14:08.34,Dialogue,,0000,0000,0000,,Tôi không trách cô, vì các cô đều là dân nghiệp dư.
Dialogue: 0,0:14:08.43,0:14:09.97,Dialogue,,0000,0000,0000,,Nghiệp dư cái gì chứ?
Dialogue: 0,0:14:10.05,0:14:13.72,Dialogue,,0000,0000,0000,,Tôi là như thế, nhưng Mizuki là bạn gái không thể thay thế của tôi.
Dialogue: 0,0:14:13.81,0:14:14.97,Dialogue,,0000,0000,0000,,Cô ấy rất tuyệt vời.
Dialogue: 0,0:14:15.06,0:14:17.35,Dialogue,,0000,0000,0000,,Thôi mà, Shirai-kun.
Dialogue: 0,0:14:17.44,0:14:20.69,Dialogue,,0000,0000,0000,,Em là bạn gái yêu quý của anh. Anh có thể cho em biết em quý giá như thế nào.
Dialogue: 0,0:14:20.77,0:14:22.52,Dialogue,,0000,0000,0000,,Quý giá như thế nào?
Dialogue: 0,0:14:22.61,0:14:25.82,Dialogue,,0000,0000,0000,,Như là giá trị chính trị của một vệ tinh do thám.
Dialogue: 0,0:14:27.78,0:14:29.45,Signs,,0000,0000,0000,,"Lãnh nguyên không bao giờ tan chảy đang mời gọi chúng ta."
Dialogue: 0,0:14:29.53,0:14:32.28,Signs,,0000,0000,0000,,"Trái tim rung lên trong đêm trắng xóa, hỡi nữ thần Rạng Đông."
Dialogue: 0,0:14:34.29,0:14:36.70,Signs,,0000,0000,0000,,"Bài hát mới của Goro Kadokawa"
Dialogue: 0,0:14:38.79,0:14:39.83,Dialogue,,0000,0000,0000,,Này nhé,
Dialogue: 0,0:14:39.92,0:14:42.75,Dialogue,,0000,0000,0000,,cậu xem loại phim này trong ngày hẹn hò ư?
Dialogue: 0,0:14:42.84,0:14:43.59,Dialogue,,0000,0000,0000,,Tại sao?
Dialogue: 0,0:14:43.63,0:14:45.42,Dialogue,,0000,0000,0000,,Coi nào, Sousuke!
Dialogue: 0,0:14:45.42,0:14:49.63,Dialogue,,0000,0000,0000,,Thật ngu ngốc khi tấn công bằng lưỡi lê mặc dù họ vẫn còn đạn dược.
Dialogue: 0,0:14:49.76,0:14:54.39,Dialogue,,0000,0000,0000,,Tại sao họ không nhử kẻ địch ra ngọn đồi phía sau và đánh bại từng nhóm sau khi tiền tuyến đã bị phân tán?
Dialogue: 0,0:14:55.52,0:14:58.34,Signs,,0000,0000,0000,,"Nhiệm vụ bắt đầu."
Dialogue: 0,0:14:58.44,0:15:01.40,Dialogue,,0000,0000,0000,,Shirai-san rất giỏi trò này đúng không?
Dialogue: 0,0:15:10.78,0:15:12.41,Dialogue,,0000,0000,0000,,Cậu có nghĩ rằng họ đã phát hiện ra?
Dialogue: 0,0:15:12.49,0:15:14.91,Dialogue,,0000,0000,0000,,Không sao đâu. Miễn sao chúng ta vẫn tiếp tục diễn...
Dialogue: 0,0:15:14.99,0:15:17.20,Dialogue,,0000,0000,0000,,cho đến khi chúng ta rời khỏi công viên, tôi có thể lo được.
Dialogue: 0,0:15:17.29,0:15:18.91,Dialogue,,0000,0000,0000,,Tùy cậu vậy.
Dialogue: 0,0:15:19.00,0:15:21.87,Dialogue,,0000,0000,0000,,Mizuki, cậu ta thật sự là Shirai-kun chứ?
Dialogue: 0,0:15:21.96,0:15:23.13,Dialogue,,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:15:23.21,0:15:27.17,Dialogue,,0000,0000,0000,,Nhưng mà hình tượng của cậu ấy khác hẳn với những gì tớ nghe lúc trước.
Dialogue: 0,0:15:27.26,0:15:30.30,Dialogue,,0000,0000,0000,,Cậu đang giấu điều gì với bọn tớ phải không ?
Dialogue: 0,0:15:30.38,0:15:32.55,Dialogue,,0000,0000,0000,,Tớ có giấu gì đâu chứ.
Dialogue: 0,0:15:33.97,0:15:36.31,Dialogue,,0000,0000,0000,,Yo, Mizuki! Cô đang làm gì ở đây thế ?
Dialogue: 0,0:15:36.39,0:15:38.18,Dialogue,,0000,0000,0000,,Shirai-kun?
Dialogue: 0,0:15:38.27,0:15:40.18,Dialogue,,0000,0000,0000,,Tiêu rồi!
Dialogue: 0,0:15:40.27,0:15:42.40,Dialogue,,0000,0000,0000,,Cô đã làm gì với tôi thế?
Dialogue: 0,0:15:42.48,0:15:46.69,Dialogue,,0000,0000,0000,,Đừng giả nai! Các cửa hàng đều nói đó là giọng một cô gái trẻ.
Dialogue: 0,0:15:46.78,0:15:48.53,Dialogue,,0000,0000,0000,,Nói gì đi chứ, Mizuki!
Dialogue: 0,0:15:48.61,0:15:50.19,Dialogue,,0000,0000,0000,,Nói gì à...
Dialogue: 0,0:15:51.61,0:15:53.99,Dialogue,,0000,0000,0000,,Cô làm gì vậy, Chidori-san?
Dialogue: 0,0:15:54.07,0:15:55.03,Dialogue,,0000,0000,0000,,Xin lỗi, xin lỗi.
Dialogue: 0,0:15:55.12,0:15:57.87,Dialogue,,0000,0000,0000,,Chúng ta hãy nói về chuyện đó ở nơi khác nhé.
Dialogue: 0,0:15:57.95,0:15:58.83,Dialogue,,0000,0000,0000,,Sagara-kun!
Dialogue: 0,0:15:58.91,0:15:59.95,Dialogue,,0000,0000,0000,,Biến đi.
Dialogue: 0,0:16:02.08,0:16:05.34,Dialogue,,0000,0000,0000,,Shirai Satoru , người đi mua nước cho các bạn đã có mặt.
Dialogue: 0,0:16:05.42,0:16:07.63,Dialogue,,0000,0000,0000,,Sousuke, mọi người đã phát hiện cả rồi.
Dialogue: 0,0:16:07.71,0:16:09.13,Dialogue,,0000,0000,0000,,Cái gì?
Dialogue: 0,0:16:09.21,0:16:10.34,Dialogue,,0000,0000,0000,,Mizuki...
Dialogue: 0,0:16:10.42,0:16:14.68,Dialogue,,0000,0000,0000,,Đừng nhìn tớ như thế. Các cậu nghĩ rằng tớ đang nói dối à ?
Dialogue: 0,0:16:14.76,0:16:16.97,Dialogue,,0000,0000,0000,,Cũng không hẳn là tớ nghi ngờ cậu.
Dialogue: 0,0:16:17.06,0:16:19.81,Dialogue,,0000,0000,0000,,Tớ muốn thấy hai cậu đang yêu nhau say đắm thế nào thôi.
Dialogue: 0,0:16:19.89,0:16:22.69,Dialogue,,0000,0000,0000,,Đúng vậy đó. Ví dụ như là...
Dialogue: 0,0:16:22.77,0:16:24.27,Dialogue,,0000,0000,0000,,Một nụ hôn!
Dialogue: 0,0:16:24.36,0:16:25.40,Dialogue,,0000,0000,0000,,Hôn?!
Dialogue: 0,0:16:25.48,0:16:27.98,Dialogue,,0000,0000,0000,,Cậu không thể ư? Kể cả khi hai cậu đang yêu nhau ?
Dialogue: 0,0:16:28.07,0:16:29.57,Dialogue,,0000,0000,0000,,Chuyện đó...
Dialogue: 0,0:16:29.65,0:16:32.32,Dialogue,,0000,0000,0000,,Thật là lạ quá nhỉ?
Dialogue: 0,0:16:32.40,0:16:36.78,Dialogue,,0000,0000,0000,,Chidori, nụ hôn mà họ đang nói có phải là đặt môi của mình lên môi của người khác ?
Dialogue: 0,0:16:36.87,0:16:38.70,Dialogue,,0000,0000,0000,,Tớ nghĩ thế.
Dialogue: 0,0:16:40.70,0:16:41.75,Dialogue,,0000,0000,0000,,Khoan đ...
Dialogue: 0,0:17:00.27,0:17:04.85,Dialogue,,0000,0000,0000,,Tên tệ hại! Ai bảo cậu hôn tôi? Sao cậu dám...
Dialogue: 0,0:17:07.56,0:17:09.98,Dialogue,,0000,0000,0000,,Các cậu...các cậu...
Dialogue: 0,0:17:10.07,0:17:12.24,Dialogue,,0000,0000,0000,,Tớ ghét các cậu!
Dialogue: 0,0:17:15.61,0:17:19.83,Dialogue,,0000,0000,0000,,Chidori-san, người lúc nãy chúng ta gặp là Shirai Satoru thật phải không?
Dialogue: 0,0:17:19.91,0:17:24.12,Dialogue,,0000,0000,0000,,Đúng vậy. Còn tên đang chìm ở kia là Sagara Sousuke.
Dialogue: 0,0:17:24.21,0:17:26.46,Dialogue,,0000,0000,0000,,Hắn ta không liên quan gì đến Mizuki hết.
Dialogue: 0,0:17:26.54,0:17:30.42,Dialogue,,0000,0000,0000,,Hắn chỉ là tên cuồng chiến tranh, biến thái, rác thải, ghiền quân đội ngu ngốc!
Dialogue: 0,0:17:30.50,0:17:32.71,Dialogue,,0000,0000,0000,,Cậu không cần phải nói như thế.
Dialogue: 0,0:17:32.80,0:17:37.30,Dialogue,,0000,0000,0000,,Chẳng sao cả. Hắn ta bị gì thế? Hắn làm điều mà hắn nói một cách dễ dàng!
Dialogue: 0,0:17:37.39,0:17:40.56,Dialogue,,0000,0000,0000,,Hắn đúng là tên tệ hại! Tớ cũng ghét hắn.
Dialogue: 0,0:17:42.81,0:17:45.18,Dialogue,,0000,0000,0000,,Nè Manami, chúng ta phải nhanh lên.
Dialogue: 0,0:17:45.27,0:17:47.73,Dialogue,,0000,0000,0000,,Phải rồi, chúng ta phải đi.
Dialogue: 0,0:17:47.81,0:17:48.94,Dialogue,,0000,0000,0000,,Các cậu về nhà à ?
Dialogue: 0,0:17:49.02,0:17:51.07,Dialogue,,0000,0000,0000,,Không, bọn tớ đuổi theo Mizuki.
Dialogue: 0,0:17:51.15,0:17:54.49,Dialogue,,0000,0000,0000,,Tớ nghĩ rằng cậu ấy đang rất chán nản.
Dialogue: 0,0:17:54.57,0:17:57.99,Dialogue,,0000,0000,0000,,Cậu ấy có hơi ích kỷ, bướng bỉnh và hay khoe khoang, nhưng mà...
Dialogue: 0,0:17:58.07,0:18:02.16,Dialogue,,0000,0000,0000,,Thật sự thì cậu ấy rất cô đơn.
Dialogue: 0,0:18:02.24,0:18:05.87,Dialogue,,0000,0000,0000,,Tạm biệt, Chidori-san. Ở chơi vui vẻ với Sagara-san nhé.
Dialogue: 0,0:18:07.71,0:18:09.46,Dialogue,,0000,0000,0000,,Chúng tớ không phải...
Dialogue: 0,0:18:12.96,0:18:14.67,Dialogue,,0000,0000,0000,,Thiệt tình.
Dialogue: 0,0:18:14.76,0:18:17.72,Dialogue,,0000,0000,0000,,Còn cậu tính ở dưới đó luôn à?
Dialogue: 0,0:18:17.80,0:18:20.89,Dialogue,,0000,0000,0000,,Không, có phải tôi đã làm điều gì tệ không ?
Dialogue: 0,0:18:20.97,0:18:23.85,Dialogue,,0000,0000,0000,,Cậu đã cướp nụ hôn của thiếu nữ mà không xin phép.
Dialogue: 0,0:18:23.93,0:18:26.06,Dialogue,,0000,0000,0000,,Đó chẳng phải là quấy rối sao ?
Dialogue: 0,0:18:26.14,0:18:27.94,Dialogue,,0000,0000,0000,,Tôi không có ý như thế.
Dialogue: 0,0:18:28.02,0:18:33.32,Dialogue,,0000,0000,0000,,Vậy thì cậu có ý gì? Cậu có thể hôn bất kỳ ai dễ dàng thế ư ?
Dialogue: 0,0:18:33.40,0:18:39.36,Dialogue,,0000,0000,0000,,Phải, nếu cần thiết. Tôi đã hôn rất nhiều đàn ông.
Dialogue: 0,0:18:40.66,0:18:43.66,Dialogue,,0000,0000,0000,,Một lính đánh thuê người Thổ Nhĩ Kỳ bị viên đạn ghim vào bụng anh ta...
Dialogue: 0,0:18:43.74,0:18:47.25,Dialogue,,0000,0000,0000,,Một ông lão người Tajik bị thổi bay đi bởi bom mìn...
Dialogue: 0,0:18:47.33,0:18:51.75,Dialogue,,0000,0000,0000,,Một số còn sống sót, một số đã chết.
Dialogue: 0,0:18:51.84,0:18:54.21,Dialogue,,0000,0000,0000,,Được rồi. Sao cậu không đứng dậy?
Dialogue: 0,0:18:54.30,0:18:57.17,Dialogue,,0000,0000,0000,,Nhưng cô đang giận.
Dialogue: 0,0:18:57.26,0:19:00.43,Dialogue,,0000,0000,0000,,Không sao cả. Cậu sẽ bị cảm lạnh đấy.
Dialogue: 0,0:19:14.36,0:19:15.98,Dialogue,,0000,0000,0000,,Gì thế, Chidori?
Dialogue: 0,0:19:17.69,0:19:20.53,Dialogue,,0000,0000,0000,,Mặt cô đỏ lắm.
Dialogue: 0,0:19:20.61,0:19:21.86,Dialogue,,0000,0000,0000,,Thế sao?
Dialogue: 0,0:19:21.95,0:19:23.49,Dialogue,,0000,0000,0000,,Cô cảm thấy không khỏe à ?
Dialogue: 0,0:19:23.58,0:19:26.91,Dialogue,,0000,0000,0000,,Không có gì cả.
Dialogue: 0,0:19:27.00,0:19:30.12,Dialogue,,0000,0000,0000,,Có đấy. Nó có thể là một trong số các triệu chứng rối loạn tuần hoàn.
Dialogue: 0,0:19:30.21,0:19:32.04,Dialogue,,0000,0000,0000,,Cô nên đi khám bác sĩ.
Dialogue: 0,0:19:32.13,0:19:35.59,Dialogue,,0000,0000,0000,,Tớ đã nói với cậu là không sao cả. Tớ không biết!
Dialogue: 0,0:19:35.67,0:19:37.00,Dialogue,,0000,0000,0000,,Quả nhiên cô vẫn còn giận.
Dialogue: 0,0:19:37.09,0:19:38.46,Dialogue,,0000,0000,0000,,Đã nói là tớ không có giận gì hết!
Dialogue: 0,0:19:38.55,0:19:45.39,Dialogue,,0000,0000,0000,,Tên đại ngốc! Tại sao mình phải giận hắn chứ? Mình không có!
Dialogue: 0,0:20:13.25,0:20:24.84,Songs (Romanji),,0000,0000,0000,,Kokoro ni chiisana hana ga saiteru
Dialogue: 0,0:20:24.93,0:20:36.11,Songs (Romanji),,0000,0000,0000,,Kimi kara moratta karenai hana ga
Dialogue: 0,0:20:36.19,0:20:42.03,Songs (Romanji),,0000,0000,0000,,Shinjiru koto mo kowagaranai kurai
Dialogue: 0,0:20:42.11,0:20:49.37,Songs (Romanji),,0000,0000,0000,,Tsuyoku nareta kara
Dialogue: 0,0:20:49.45,0:20:55.21,Songs (Romanji),,0000,0000,0000,,Kimi ni aete ureshikatta
Dialogue: 0,0:20:55.29,0:21:01.67,Songs (Romanji),,0000,0000,0000,,Tsunaida te ga hokoridatta
Dialogue: 0,0:21:01.76,0:21:08.47,Songs (Romanji),,0000,0000,0000,,Ima wa betsubetsu no sora miagete itemo
Dialogue: 0,0:21:08.56,0:21:16.94,Songs (Romanji),,0000,0000,0000,,Hora arukeru hitori demo
Dialogue: 0,0:20:13.25,0:20:24.84,Songs,,0000,0000,0000,,Bông hoa nhỏ trong tim em
Dialogue: 0,0:20:24.93,0:20:36.11,Songs,,0000,0000,0000,,Bông hoa không bao giờ tàn mà anh đã tặng em
Dialogue: 0,0:20:36.19,0:20:42.03,Songs,,0000,0000,0000,,Em không hề sợ hãi, thậm chí luôn tin tưởng
Dialogue: 0,0:20:42.11,0:20:49.37,Songs,,0000,0000,0000,,Đó là điều khiến em trở nên mạnh mẽ
Dialogue: 0,0:20:49.45,0:20:55.21,Songs,,0000,0000,0000,,Em rất hạnh phúc vì đã gặp anh
Dialogue: 0,0:20:55.29,0:21:01.67,Songs,,0000,0000,0000,,Em tự hào khi nắm tay anh
Dialogue: 0,0:21:01.76,0:21:08.47,Songs,,0000,0000,0000,,Dù cho hai ta hướng về bầu trời khác nhau
Dialogue: 0,0:21:08.56,0:21:16.94,Songs,,0000,0000,0000,,Anh thấy không, em có thể tự mình bước đi
Dialogue: 0,0:21:25.87,0:21:30.23,Dialogue,,0000,0000,0000,,"Bộ phim này hoàn toàn là hư cấu.\N Tên nhân vật và các tổ chức trong phim không liên quan đến bất cứ cá nhân / tổ chức nào."
Dialogue: 0,0:21:31.62,0:21:33.87,Dialogue,,0000,0000,0000,,Sousuke, tớ xin lỗi. Tớ đã nói hơi quá.
Dialogue: 0,0:21:33.96,0:21:37.67,Dialogue,,0000,0000,0000,,Tớ đã làm bữa tối cho cậu nè. Mà tại sao trong phòng cậu lại có con gái?
Dialogue: 0,0:21:37.75,0:21:41.17,Dialogue,,0000,0000,0000,,Kỳ tới Full Metal Panic: tập 9, "Nguy hiểm tại nhà."
Dialogue: 0,0:21:41.25,0:21:43.17,Dialogue,,0000,0000,0000,,Sousuke, cô ta là ai thế ?
Dialogue: 0,0:21:43.26,0:21:44.55,Dialogue,,0000,0000,0000,,Cô ấy là thuyền trưởng của tàu ngầm.
Dialogue: 0,0:21:44.63,0:21:46.22,Dialogue,,0000,0000,0000,,Làm sao tớ tin được hả?
