Dialogue: 0,0:00:16.60,0:00:23.89,Songs (Romanji),,0000,0000,0000,,Futari de nigebasho sagashite
Dialogue: 0,0:00:23.98,0:00:31.40,Songs (Romanji),,0000,0000,0000,,Hashitta tenki ame no naka
Dialogue: 0,0:00:31.49,0:00:38.83,Songs (Romanji),,0000,0000,0000,,Tatoeba nanika wo ushinau toshite mo
Dialogue: 0,0:00:38.91,0:00:47.67,Songs (Romanji),,0000,0000,0000,,Mamotte ikanakya hitotsu dake wa
Dialogue: 0,0:00:47.75,0:00:54.97,Songs (Romanji),,0000,0000,0000,,Kono sekai ni umareta sono imi wo
Dialogue: 0,0:00:55.05,0:01:00.47,Songs (Romanji),,0000,0000,0000,,Kimi to mitsuke ni yukou
Dialogue: 0,0:01:00.56,0:01:05.64,Songs (Romanji),,0000,0000,0000,,Itami sae mo kakaenagara
Dialogue: 0,0:01:05.73,0:01:12.53,Songs (Romanji),,0000,0000,0000,,Atarashii keshiki mukae ni yukou
Dialogue: 0,0:00:16.60,0:00:23.89,Songs,,0000,0000,0000,,Hai chúng ta đang tìm một nơi để trốn thoát
Dialogue: 0,0:00:23.98,0:00:31.40,Songs,,0000,0000,0000,,Cùng chạy dưới ánh nắng chói chang
Dialogue: 0,0:00:31.49,0:00:38.83,Songs,,0000,0000,0000,,Ngay cả khi em mất một điều gì khác
Dialogue: 0,0:00:38.91,0:00:47.67,Songs,,0000,0000,0000,,Thì em chỉ muốn giữ lấy một điều duy nhất
Dialogue: 0,0:00:47.75,0:00:54.97,Songs,,0000,0000,0000,,Ý nghĩa khi được sinh ra ở thế giới này
Dialogue: 0,0:00:55.05,0:01:00.47,Songs,,0000,0000,0000,,Hãy đi cùng em và tìm hiểu
Dialogue: 0,0:01:00.56,0:01:05.64,Songs,,0000,0000,0000,,Giữ chặt lấy nó, dù cho là nỗi đau
Dialogue: 0,0:01:05.73,0:01:12.53,Songs,,0000,0000,0000,,Cùng tiến lên đón chào thế giới mới
Dialogue: 0,0:01:15.53,0:01:19.88,Dialogue,,0000,0000,0000,,Translator: MaHiME
Dialogue: 0,0:01:23.88,0:01:29.88,Dialogue,,0000,0000,0000,,Waya fansub presents
Dialogue: 0,0:01:39.14,0:01:42.39,Dialogue,,0000,0000,0000,,Mẫu 96 có điểm yếu ở phía bên phải.
Dialogue: 0,0:01:42.47,0:01:44.48,Dialogue,,0000,0000,0000,,Nó đã được tái tạo lại một cách chính xác ngay cả với nhược điểm.
Dialogue: 0,0:01:44.56,0:01:46.64,Dialogue,,0000,0000,0000,,Dĩ nhiên, nó là của Banpresto mà.
Dialogue: 0,0:01:52.36,0:01:53.73,Dialogue,,0000,0000,0000,,Shinji...
Dialogue: 0,0:02:00.53,0:02:02.30,Dialogue,,0000,0000,0000,,Narashiro đang cháy ư ?
Dialogue: 0,0:02:02.42,0:02:03.83,Dialogue,,0000,0000,0000,,Mùa hè !
Dialogue: 0,0:02:03.91,0:02:06.50,Dialogue,,0000,0000,0000,,Biển !
Dialogue: 0,0:02:06.58,0:02:07.75,Dialogue,,0000,0000,0000,,Và...
Dialogue: 0,0:02:07.83,0:02:11.13,Dialogue,,0000,0000,0000,,Mùa hè này... mùa hè này...
Dialogue: 0,0:02:11.21,0:02:13.17,Dialogue,,0000,0000,0000,,Mùa hè này !
Dialogue: 0,0:02:17.09,0:02:21.60,Dialogue,,0000,0000,0000,,"Chào mừng đến với đại hội của Lực Lượng Phòng Vệ Mặt Đất tại căn cứ Narashiro."
Dialogue: 0,0:02:22.81,0:02:26.02,Dialogue,,0000,0000,0000,,Tại sao chúng ta lại đến đây vào kỳ nghỉ hè chứ ?
Dialogue: 0,0:02:26.10,0:02:27.98,Dialogue,,0000,0000,0000,,Nhưng đây vẫn là ở Chiba mà.
Dialogue: 0,0:02:28.06,0:02:31.23,Dialogue,,0000,0000,0000,,Này nhé! Chúng ta đã quyết định đi bơi ở Kujukuri kia mà!
Dialogue: 0,0:02:31.31,0:02:33.11,Dialogue,,0000,0000,0000,,Đến Onjuku! Bãi biển đầy cát trắng!
Dialogue: 0,0:02:33.19,0:02:35.98,Dialogue,,0000,0000,0000,,Ánh trăng trên sa mạc! Những con lạc đà!
Dialogue: 0,0:02:36.74,0:02:39.45,Dialogue,,0000,0000,0000,,An ninh tại nơi tập trung có vẻ như không có vấn đề gì cả.
Dialogue: 0,0:02:39.53,0:02:41.66,Dialogue,,0000,0000,0000,,Đến đây đi thay vì đứng ngẩn ngơ ra đó!
Dialogue: 0,0:02:41.74,0:02:44.33,Dialogue,,0000,0000,0000,,Là hắn ! Quả nhiên là do hắn !
Dialogue: 0,0:02:44.41,0:02:47.41,Dialogue,,0000,0000,0000,,Cậu không cần phải đi với bọn tớ nếu như cậu không muốn đến.
Dialogue: 0,0:02:48.41,0:02:53.84,Dialogue,,0000,0000,0000,,Phải phải. Cậu nên nói với họ khi mà Sagara đồng ý với ý kiến của Kazama.
Dialogue: 0,0:02:53.92,0:02:58.97,Dialogue,,0000,0000,0000,,Cậu đã lên cao trung rồi kia mà. Cậu không nên ích kỉ và làm rối kế hoạch của người khác như thế.
Dialogue: 0,0:03:01.09,0:03:03.97,Dialogue,,0000,0000,0000,,Nó có thể sẽ hào hứng hơn việc đi bơi đấy.
Dialogue: 0,0:03:04.06,0:03:06.85,Dialogue,,0000,0000,0000,,Một chàng phi công "BS" đẹp trai có thể sẽ hẹn hò với tớ.
Dialogue: 0,0:03:06.93,0:03:10.52,Dialogue,,0000,0000,0000,,Tớ sẽ phải làm gì nếu anh ta nói, "Em sẽ chơi "BS" với anh chứ?"
Dialogue: 0,0:03:11.19,0:03:13.65,Dialogue,,0000,0000,0000,,Ý cậu là "AS" ?
Dialogue: 0,0:03:13.69,0:03:16.44,Signs,,0000,0000,0000,,"Lối vào"
Dialogue: 0,0:03:14.86,0:03:18.99,Dialogue,,0000,0000,0000,,Chúng ta cần phải chấm dứt chuỗi thất bại của mình tại đại hội lần này.
Dialogue: 0,0:03:19.07,0:03:24.58,Dialogue,,0000,0000,0000,,Những tên ở Nerima tự gọi mình là "Red Dragon" trong những lời thách thức mà chúng gửi đến chúng ta.
Dialogue: 0,0:03:24.66,0:03:26.74,Dialogue,,0000,0000,0000,,Chúng ta sẽ cho chúng biết địa ngục là gì.
Dialogue: 0,0:03:27.50,0:03:30.50,Dialogue,,0000,0000,0000,,Cầu chúa phù hộ các cậu.
Dialogue: 0,0:03:30.58,0:03:31.92,Dialogue,,0000,0000,0000,,Bắt đầu xuất phát !
Dialogue: 0,0:03:40.13,0:03:42.05,Dialogue,,0000,0000,0000,,Mì xào đây !
Dialogue: 0,0:03:42.14,0:03:44.76,Dialogue,,0000,0000,0000,,Đậu phộng đặc sản của Narashino đây.
Dialogue: 0,0:03:44.85,0:03:47.22,Dialogue,,0000,0000,0000,,Chỉ 200 yên là có 1 bịch lớn đây.
Dialogue: 0,0:03:47.31,0:03:52.06,Dialogue,,0000,0000,0000,,Xem đi nào! Đây là củ cải tốt nhất của Nerima đây.
Dialogue: 0,0:03:52.15,0:03:53.73,Dialogue,,0000,0000,0000,,Xin mời quý khách, hãy dừng lại thử xem nào!
Dialogue: 0,0:03:54.81,0:03:57.86,Dialogue,,0000,0000,0000,,Trận tranh tài của đội AS xung kích bắt đầu sớm thôi.
Dialogue: 0,0:03:57.94,0:03:59.53,Dialogue,,0000,0000,0000,,Mọi người đến xem nhé !
Dialogue: 0,0:04:00.24,0:04:01.74,Dialogue,,0000,0000,0000,,Trời ạ, nó trông thật là gớm.
Dialogue: 0,0:04:01.82,0:04:03.49,Dialogue,,0000,0000,0000,,Đó là thùng cạc tông mà.
Dialogue: 0,0:04:03.57,0:04:05.66,Dialogue,,0000,0000,0000,,Hàng thật nhìn ngầu lắm đấy!
Dialogue: 0,0:04:05.74,0:04:08.12,Dialogue,,0000,0000,0000,,Mình đoán là họ sẽ lại thua năm nay thôi.
Dialogue: 0,0:04:08.95,0:04:10.41,Dialogue,,0000,0000,0000,,Đi nào!
Dialogue: 0,0:04:10.50,0:04:13.62,Dialogue,,0000,0000,0000,,Ngay cả bọn trẻ cũng gọi nó là thấy gớm.
Dialogue: 0,0:04:14.79,0:04:18.34,Dialogue,,0000,0000,0000,,Đội AS ở đây cực kỳ yếu.
Dialogue: 0,0:04:18.42,0:04:20.63,Dialogue,,0000,0000,0000,,Họ có vấn đề với trang bị à ?
Dialogue: 0,0:04:20.72,0:04:23.47,Dialogue,,0000,0000,0000,,Không phải, trang bị ở đây được coi là một trong những trang bị tốt nhất của Lực Lượng Phòng Vệ Mặt Đất.
Dialogue: 0,0:04:23.55,0:04:25.01,Dialogue,,0000,0000,0000,,Họ là lính không quân.
Dialogue: 0,0:04:25.09,0:04:26.43,Dialogue,,0000,0000,0000,,Thế thì vì sao họ lại yếu ?
Dialogue: 0,0:04:26.51,0:04:29.31,Dialogue,,0000,0000,0000,,Giống như là họ chỉ có được trang bị tốt mà thôi.
Dialogue: 0,0:04:31.02,0:04:32.39,Dialogue,,0000,0000,0000,,Shinji!
Dialogue: 0,0:04:33.85,0:04:35.15,Dialogue,,0000,0000,0000,,Ba !
Dialogue: 0,0:04:35.23,0:04:37.15,Dialogue,,0000,0000,0000,,Cậu chắc là Sagara-san.
Dialogue: 0,0:04:38.52,0:04:40.90,Dialogue,,0000,0000,0000,,Vâng! Tôi là trung sĩ Sagara.
Dialogue: 0,0:04:43.24,0:04:45.03,Dialogue,,0000,0000,0000,,Ơ... rất vui được gặp ông.
Dialogue: 0,0:04:45.11,0:04:49.08,Dialogue,,0000,0000,0000,,Kazama Shintaro, tôi là tham mưu ở đây.
Dialogue: 0,0:04:49.16,0:04:53.71,Dialogue,,0000,0000,0000,,Trước giờ Shinji chưa từng dẫn bạn bè đến đại hội này.
Dialogue: 0,0:04:53.79,0:04:55.71,Dialogue,,0000,0000,0000,,Ba đừng nói vậy chứ.
Dialogue: 0,0:04:55.79,0:04:59.21,Dialogue,,0000,0000,0000,,Bởi vì nó luôn như thế nên tôi đã rất lo lắng về nó.
Dialogue: 0,0:04:59.30,0:05:01.05,Dialogue,,0000,0000,0000,,Ba, đừng nói nữa mà !
Dialogue: 0,0:05:01.13,0:05:03.17,Dialogue,,0000,0000,0000,,Cậu cứ tự nhiên nhé.
Dialogue: 0,0:05:03.26,0:05:05.26,Dialogue,,0000,0000,0000,,Vâng, thưa ngài tham mưu !
Dialogue: 0,0:05:07.30,0:05:11.18,Dialogue,,0000,0000,0000,,Cậu ta có vẻ không bình thường. Rất lễ phép, cứ như là quân nhân vậy.
Dialogue: 0,0:05:18.02,0:05:19.86,Dialogue,,0000,0000,0000,,Nó khéo léo quá nhỉ.
Dialogue: 0,0:05:19.94,0:05:23.19,Dialogue,,0000,0000,0000,,Phải chi mình kêu một phần không có rong biển.
Dialogue: 0,0:05:23.28,0:05:25.78,Dialogue,,0000,0000,0000,,Nếu như nó dính vào răng thì sẽ không ai đến hẹn hò với mình cả.
Dialogue: 0,0:05:25.86,0:05:27.66,Dialogue,,0000,0000,0000,,Cậu muốn ăn không, Kana-chan ?
Dialogue: 0,0:05:29.20,0:05:30.20,Dialogue,,0000,0000,0000,,Yo !
Dialogue: 0,0:05:31.20,0:05:33.00,Dialogue,,0000,0000,0000,,Các quý cô từ đâu đến vậy ?
Dialogue: 0,0:05:34.83,0:05:36.67,Dialogue,,0000,0000,0000,,Sengawa.
Dialogue: 0,0:05:36.75,0:05:40.21,Dialogue,,0000,0000,0000,,Thật là trùng hợp, chúng tôi đến từ Nerima.
Dialogue: 0,0:05:40.29,0:05:41.63,Dialogue,,0000,0000,0000,,{\i1}Tên này là ai thế?{\i0} \N Chỗ tôi và Sengawa không xa cho lắm.
Dialogue: 0,0:05:41.71,0:05:44.51,Dialogue,,0000,0000,0000,,{\i1}Cặp mắt kính kỳ cục đó. Hắn ta đang chơi cosplay à? {\i0}\N Nó gần như là chung một thị trấn.
Dialogue: 0,0:05:44.59,0:05:47.34,Dialogue,,0000,0000,0000,,Cô có muốn lái AS với tôi không ?
Dialogue: 0,0:05:47.43,0:05:48.93,Dialogue,,0000,0000,0000,,HẢ ?
Dialogue: 0,0:05:49.01,0:05:52.64,Dialogue,,0000,0000,0000,,Tôi sẽ cho cô thấy kinh nghiệm tuyệt vời của Nerima Red Dragon.
Dialogue: 0,0:05:52.72,0:05:54.02,Dialogue,,0000,0000,0000,,Nerima "Daikon"? [Daikon: củ cải]
Dialogue: 0,0:05:54.10,0:05:55.10,Dialogue,,0000,0000,0000,,Không phải !
Dialogue: 0,0:05:55.18,0:05:59.15,Dialogue,,0000,0000,0000,,Nerima Red Dragon, con rồng màu đỏ. Cô thấy thế nào ?
Dialogue: 0,0:05:59.23,0:06:02.57,Dialogue,,0000,0000,0000,,Yaaa ! Mình rất vui lòng để thử nó !
Dialogue: 0,0:06:02.65,0:06:06.45,Dialogue,,0000,0000,0000,,Tôi là Akagi Ryunosuke. Còn cô?
Dialogue: 0,0:06:07.16,0:06:09.70,Dialogue,,0000,0000,0000,,Tôi không thích AS .
Dialogue: 0,0:06:09.78,0:06:12.28,Dialogue,,0000,0000,0000,,Và tôi cũng ghét những tên phát điên vì nó.
Dialogue: 0,0:06:12.37,0:06:16.33,Dialogue,,0000,0000,0000,,Đừng lo. Tôi sẽ dạy cô mọi thứ từ A đến Z.
Dialogue: 0,0:06:16.41,0:06:18.00,Dialogue,,0000,0000,0000,,Không bao giờ.
Dialogue: 0,0:06:19.33,0:06:21.84,Dialogue,,0000,0000,0000,,Cô ấy thật là dễ thương khi tức giận.
Dialogue: 0,0:06:21.92,0:06:24.50,Dialogue,,0000,0000,0000,,Đại úy! Đã đến giờ rồi.
Dialogue: 0,0:06:24.59,0:06:25.76,Dialogue,,0000,0000,0000,,Rõ rồi !
Dialogue: 0,0:06:26.47,0:06:27.92,Dialogue,,0000,0000,0000,,Xin mạn phép.
Dialogue: 0,0:06:28.80,0:06:33.06,Dialogue,,0000,0000,0000,,Tức quá đi ! Tại sao là Kaname mà không phải là mình ?
Dialogue: 0,0:06:33.14,0:06:35.68,Dialogue,,0000,0000,0000,,Đã thế mình sẽ trả thù cậu ấy.
Dialogue: 0,0:06:35.77,0:06:37.35,Dialogue,,0000,0000,0000,,Tại sao chứ ?
Dialogue: 0,0:06:46.78,0:06:49.24,Dialogue,,0000,0000,0000,,Mọi người trông có vẻ mệt mỏi. Có chuyện gì sao ?
Dialogue: 0,0:06:49.32,0:06:50.28,Dialogue,,0000,0000,0000,,Im đi !
Dialogue: 0,0:06:52.24,0:06:53.24,Dialogue,,0000,0000,0000,,Bây giờ !
Dialogue: 0,0:06:53.33,0:06:56.62,Dialogue,,0000,0000,0000,,Chúng ta bắt đầu sự kiện chính của đại hội ngày hôm nay.
Dialogue: 0,0:06:56.70,0:07:03.92,Dialogue,,0000,0000,0000,,Trận tranh tài giữa Lực lượng xung kích Narashiro và Lực lượng xung kích Nerima.
Dialogue: 0,0:07:04.00,0:07:05.38,Dialogue,,0000,0000,0000,,Các đấu thủ đang tiến vào !
Dialogue: 0,0:07:08.47,0:07:09.76,Dialogue,,0000,0000,0000,,Akagi!
Dialogue: 0,0:07:09.84,0:07:11.64,Dialogue,,0000,0000,0000,,Bọn ta sẽ chiến thắng năm nay!
Dialogue: 0,0:07:12.60,0:07:17.35,Dialogue,,0000,0000,0000,,Ngươi đang tự sướng gì thế ? Ngươi chỉ là mồi ngon cho Nerima Red Dragon mà thôi !
Dialogue: 0,0:07:18.35,0:07:24.18,Signs,,0000,0000,0000,,Daikon = củ cải . Dragon và Daikon tiếng Nhật phát âm gần giống nhau .
Dialogue: 0,0:07:18.18,0:07:19.35,Dialogue,,0000,0000,0000,,Ồ, Nerima "Daikon" kìa .
Dialogue: 0,0:07:19.44,0:07:20.81,Dialogue,,0000,0000,0000,,Mình sẽ không tha cho hắn.
Dialogue: 0,0:07:26.61,0:07:29.44,Dialogue,,0000,0000,0000,,Heave-ho! Heave-ho!
Dialogue: 0,0:07:30.95,0:07:34.45,Dialogue,,0000,0000,0000,,Ta sẽ hạ chúng trong 1 đòn! Tăng sức mạnh tối đa ở tay phải!
Dialogue: 0,0:07:34.53,0:07:36.79,Dialogue,,0000,0000,0000,,Tăng sức mạnh tối đa ở tay phải ! Tiếp tục kéo thẳng !
Dialogue: 0,0:07:36.87,0:07:38.08,Dialogue,,0000,0000,0000,,Lên nào !
Dialogue: 0,0:07:42.25,0:07:45.67,Dialogue,,0000,0000,0000,,Đội Nerima năm nay vẫn mạnh mẽ như xưa.
Dialogue: 0,0:07:45.75,0:07:48.80,Dialogue,,0000,0000,0000,,Narashiro khá yếu nhỉ.
Dialogue: 0,0:07:48.88,0:07:51.68,Dialogue,,0000,0000,0000,,Tớ đã nói rồi mà. Họ rất yếu.
Dialogue: 0,0:07:53.43,0:07:55.60,Dialogue,,0000,0000,0000,,Chúng ta lại yếu thế hơn trong năm nay.
Dialogue: 0,0:07:55.68,0:07:59.68,Dialogue,,0000,0000,0000,,Narashiro vẫn chưa chịu đầu hàng! Xem ra họ đang trông cậy vào những đấu thủ chủ lực.
Dialogue: 0,0:08:02.69,0:08:03.56,Dialogue,,0000,0000,0000,,Vượt lên dẫn đầu nào!
Dialogue: 0,0:08:03.65,0:08:05.69,Dialogue,,0000,0000,0000,,Chúng ta không thể chạy nhanh hơn được nữa !
Dialogue: 0,0:08:05.77,0:08:07.27,Dialogue,,0000,0000,0000,,Thế này vẫn không ổn !
Dialogue: 0,0:08:07.36,0:08:08.65,Dialogue,,0000,0000,0000,,Gỡ bỏ giới hạn đi !
Dialogue: 0,0:08:08.73,0:08:09.73,Dialogue,,0000,0000,0000,,Đã gỡ bỏ !
Dialogue: 0,0:08:12.32,0:08:16.24,Dialogue,,0000,0000,0000,,Oh, cú móc rất đẹp ! Nerima lại chiến thắng !
Dialogue: 0,0:08:16.91,0:08:19.08,Dialogue,,0000,0000,0000,,Nerima! Thế là không công bằng !
Dialogue: 0,0:08:19.16,0:08:20.33,Dialogue,,0000,0000,0000,,Kazama...
Dialogue: 0,0:08:30.59,0:08:34.43,Dialogue,,0000,0000,0000,,Bọn chúng đang ở thế bộ đôi. Sẽ có khoảng cách nhỏ trong sự đồng bộ hóa.
Dialogue: 0,0:08:34.51,0:08:36.30,Dialogue,,0000,0000,0000,,Đây là lúc chúng ta nắm lấy cơ hội!
Dialogue: 0,0:08:36.39,0:08:38.31,Dialogue,,0000,0000,0000,,Chúng ta cũng trong thế bộ đôi đấy !
Dialogue: 0,0:08:38.39,0:08:40.31,Dialogue,,0000,0000,0000,,Chiến thuật B ! Chuẩn bị !
Dialogue: 0,0:08:40.39,0:08:41.60,Dialogue,,0000,0000,0000,, B, rõ !
Dialogue: 0,0:08:44.23,0:08:46.23,Dialogue,,0000,0000,0000,,Đội trưởng ! Nó xuất hiện kìa !
Dialogue: 0,0:08:46.31,0:08:48.48,Dialogue,,0000,0000,0000,,Red Dragon's drive smash!
Dialogue: 0,0:08:52.61,0:08:53.86,Dialogue,,0000,0000,0000,,Cái gì ?!
Dialogue: 0,0:08:55.36,0:08:57.91,Dialogue,,0000,0000,0000,,Đó là đòn nhử ! Tiến lên trước !
Dialogue: 0,0:08:58.91,0:08:59.91,Dialogue,,0000,0000,0000,,Quá ngây thơ !
Dialogue: 0,0:09:03.54,0:09:04.37,Dialogue,,0000,0000,0000,,Tiêu rồi !
Dialogue: 0,0:09:04.46,0:09:07.29,Dialogue,,0000,0000,0000,,Nữa ư ! Hãy ngưng ngay thủ đoạn dơ bẩn đi !
Dialogue: 0,0:09:07.38,0:09:10.38,Dialogue,,0000,0000,0000,,Hết rồi ! Tất cả đã kết thúc .
Dialogue: 0,0:09:14.38,0:09:17.59,Dialogue,,0000,0000,0000,,Đội trưởng ! Một AS không xác định đang tiến đến gần.
Dialogue: 0,0:09:17.68,0:09:19.05,Dialogue,,0000,0000,0000,,Là một trong số AS của Narashiro à ?
Dialogue: 0,0:09:19.14,0:09:24.10,Dialogue,,0000,0000,0000,,Không thể nào. AS này di chuyển nhanh gấp 3 lần bình thường.
Dialogue: 0,0:09:24.19,0:09:25.39,Dialogue,,0000,0000,0000,,Cái gì ?!
Dialogue: 0,0:09:29.07,0:09:29.86,Dialogue,,0000,0000,0000,,Geezzz
Dialogue: 0,0:09:29.94,0:09:31.19,Dialogue,,0000,0000,0000,,Hay quá !
Dialogue: 0,0:09:32.44,0:09:33.82,Dialogue,,0000,0000,0000,,Sagara-kun đâu rồi ?
Dialogue: 0,0:09:36.36,0:09:38.16,Dialogue,,0000,0000,0000,,Không lẽ là...
Dialogue: 0,0:09:38.24,0:09:40.20,Dialogue,,0000,0000,0000,,Ngươi có nghe ta nói không, Nerima "Daikon"?!
Dialogue: 0,0:09:40.28,0:09:42.62,Dialogue,,0000,0000,0000,,Nerima Red Dragon!
Dialogue: 0,0:09:42.70,0:09:46.21,Dialogue,,0000,0000,0000,,Đây là cuộc tranh tài. Không phải là chiến tranh.
Dialogue: 0,0:09:46.29,0:09:48.17,Dialogue,,0000,0000,0000,,Không nên sử dụng những thủ đoạn như thế.
Dialogue: 0,0:09:49.09,0:09:50.59,Dialogue,,0000,0000,0000,,Hãy lộ diện đi !
Dialogue: 0,0:09:53.42,0:09:55.84,Dialogue,,0000,0000,0000,,Cú đánh lúc nãy khá đẹp mắt đấy.
Dialogue: 0,0:09:57.64,0:09:59.64,Dialogue,,0000,0000,0000,,Tên khốn, người là ai ?
Dialogue: 0,0:10:05.27,0:10:07.81,Dialogue,,0000,0000,0000,,Phi công AS vô danh ư ?
Dialogue: 0,0:10:07.90,0:10:08.90,Dialogue,,0000,0000,0000,,Tốt thôi...
Dialogue: 0,0:10:09.86,0:10:10.81,Dialogue,,0000,0000,0000,,Hãy đấu một trận đi !
Dialogue: 0,0:10:10.90,0:10:12.07,Dialogue,,0000,0000,0000,,Không thành vấn đề !
Dialogue: 0,0:10:21.62,0:10:23.41,Dialogue,,0000,0000,0000,,Sousuke, cậu đang làm cái gì thế ?
Dialogue: 0,0:10:24.29,0:10:25.91,Dialogue,,0000,0000,0000,,Sao cô biết đó là tôi ?
Dialogue: 0,0:10:26.62,0:10:29.71,Dialogue,,0000,0000,0000,,Cậu là người duy nhất làm những việc như thế này !
Dialogue: 0,0:10:29.79,0:10:33.67,Dialogue,,0000,0000,0000,,Nhưng mà cuộc thi này không phù hợp với tinh thần fairplay.
Dialogue: 0,0:10:34.51,0:10:38.34,Dialogue,,0000,0000,0000,,Trời ạ ! Ước gì mình đã không đến đây .
Dialogue: 0,0:10:38.43,0:10:40.93,Dialogue,,0000,0000,0000,,Trả lại cho tôi kỳ nghỉ hè với bãi biển thơ mộng.
Dialogue: 0,0:10:41.01,0:10:42.47,Dialogue,,0000,0000,0000,,Đây !
Dialogue: 0,0:10:42.56,0:10:45.14,Dialogue,,0000,0000,0000,,Bên trong GS chắc là nóng lắm nhỉ ?
Dialogue: 0,0:10:45.22,0:10:50.19,Signs,,0000,0000,0000,,[Vào những năm 1960 tại Nhật, họ gọi các ban nhạc như The Beatles là "Group Sounds."]
Dialogue: 0,0:10:45.22,0:10:48.18,Dialogue,,0000,0000,0000,,Đó là "Group Sounds" à.
Dialogue: 0,0:10:48.19,0:10:50.19,Dialogue,,0000,0000,0000,,Vậy mà tớ không biết đấy.
Dialogue: 0,0:10:50.27,0:10:52.56,Dialogue,,0000,0000,0000,,Chờ đã Mizuki, cậu đang làm gì đấy?
Dialogue: 0,0:10:52.65,0:10:56.32,Dialogue,,0000,0000,0000,,Anh có muốn lái GS với em tốt hơn là với con nhóc đó không?
Dialogue: 0,0:10:56.40,0:11:00.28,Dialogue,,0000,0000,0000,,Dù cho anh đang mang bộ đồ hóa trang thế này nhưng có thể anh rất đẹp trai.
Dialogue: 0,0:11:00.36,0:11:03.37,Dialogue,,0000,0000,0000,,Nè, anh cởi cái thứ này ra và cho em xem mặt nhé ?
Dialogue: 0,0:11:05.70,0:11:08.50,Dialogue,,0000,0000,0000,,Cậu đang làm phiền ngài phi công AS đấy. Đi thôi !
Dialogue: 0,0:11:08.58,0:11:10.25,Dialogue,,0000,0000,0000,,Cố lên nhé !
Dialogue: 0,0:11:10.33,0:11:11.46,Dialogue,,0000,0000,0000,,Kana-chan!
Dialogue: 0,0:11:14.92,0:11:16.92,Dialogue,,0000,0000,0000,,Vậy ra tên cô ấy là Kaname.
Dialogue: 0,0:11:18.26,0:11:19.42,Dialogue,,0000,0000,0000,,Dễ thương quá.
Dialogue: 0,0:11:20.01,0:11:23.05,Dialogue,,0000,0000,0000,,Kaname-san ! Kaname-sannnnn....
Dialogue: 0,0:11:25.47,0:11:27.02,Dialogue,,0000,0000,0000,,Sau khi thảo luận, chúng tôi quyết định...
Dialogue: 0,0:11:27.10,0:11:30.27,Dialogue,,0000,0000,0000,,kết quả hòa trong trận bóng bàn do có sự can thiệp từ bên ngoài.
Dialogue: 0,0:11:33.06,0:11:34.06,Dialogue,,0000,0000,0000,,Ba ?!
Dialogue: 0,0:11:34.15,0:11:39.03,Dialogue,,0000,0000,0000,,Tôi chưa bao giờ biết rằng mình có phi công AS tài năng như vậy ở Narashiro.
Dialogue: 0,0:11:39.11,0:11:42.28,Dialogue,,0000,0000,0000,,Có thể hơi bất ngờ nhưng cậu có thể chấp nhận lời thỉnh cầu của tôi không ?
Dialogue: 0,0:11:49.29,0:11:52.62,Dialogue,,0000,0000,0000,,Đó là tất cả. Chúng ta không còn gì khác nữa.
Dialogue: 0,0:11:52.71,0:11:54.21,Dialogue,,0000,0000,0000,,Ngài tham mưu ?
Dialogue: 0,0:11:54.29,0:11:56.54,Dialogue,,0000,0000,0000,,Kosuge, cậu thật là ích kỷ!
Dialogue: 0,0:11:56.63,0:12:00.51,Dialogue,,0000,0000,0000,,Cậu đã giấu tôi về vũ khí bí mật là cậu ta.
Dialogue: 0,0:12:02.59,0:12:05.89,Dialogue,,0000,0000,0000,,Làm ơn ! Chúng tôi cần phải đánh bại Nerima !
Dialogue: 0,0:12:05.97,0:12:08.14,Dialogue,,0000,0000,0000,,Xin cậu hãy chỉ huy đội ngũ !
Dialogue: 0,0:12:09.27,0:12:11.02,Dialogue,,0000,0000,0000,,Ba đang làm gì thế ?
Dialogue: 0,0:12:12.77,0:12:13.85,Dialogue,,0000,0000,0000,,Kazama...
Dialogue: 0,0:12:13.94,0:12:18.57,Dialogue,,0000,0000,0000,,Ba hạ mình cầu xin như thế chỉ vì ba là tham mưu phải không ?
Dialogue: 0,0:12:18.65,0:12:20.44,Dialogue,,0000,0000,0000,,Ba không có lựa chọn nào khác ngoài việc tham mưu...
Dialogue: 0,0:12:20.53,0:12:23.07,Dialogue,,0000,0000,0000,,vì ba không thể lái AS một cách thành thạo được.
Dialogue: 0,0:12:23.16,0:12:25.74,Dialogue,,0000,0000,0000,,Đó là lý do vì sao ba không còn cách nào khác phải không ?
Dialogue: 0,0:12:26.66,0:12:28.70,Dialogue,,0000,0000,0000,,Sự thật là thế à ?
Dialogue: 0,0:12:28.79,0:12:30.79,Dialogue,,0000,0000,0000,,Ông ấy không có cảm giác gì về nó cả.
Dialogue: 0,0:12:32.08,0:12:36.67,Dialogue,,0000,0000,0000,,Ba có biết vì sao con bắt đầu đọc AS Fan không ?
Dialogue: 0,0:12:36.75,0:12:38.55,Dialogue,,0000,0000,0000,,Con đã muốn tìm hiểu...
Dialogue: 0,0:12:38.63,0:12:42.17,Dialogue,,0000,0000,0000,,...tìm hiểu rằng việc lái AS khó khăn như thế nào.
Dialogue: 0,0:12:42.26,0:12:45.84,Dialogue,,0000,0000,0000,,Tìm hiểu vì sao ba lại không thể lái nó.
Dialogue: 0,0:12:47.35,0:12:49.35,Dialogue,,0000,0000,0000,,Con đã mong muốn ba lái nó.
Dialogue: 0,0:12:50.64,0:12:53.94,Dialogue,,0000,0000,0000,,Con đã muốn khoe rằng ba của mình là một phi công AS.
Dialogue: 0,0:12:55.98,0:12:56.81,Dialogue,,0000,0000,0000,,Shinji...
Dialogue: 0,0:12:56.90,0:12:58.94,Dialogue,,0000,0000,0000,,Con ghét ba !
Dialogue: 0,0:13:02.57,0:13:05.61,Dialogue,,0000,0000,0000,,Xin lỗi, nhưng...
Dialogue: 0,0:13:05.70,0:13:08.28,Dialogue,,0000,0000,0000,,Cậu đang quên mất một điều quan trọng.
Dialogue: 0,0:13:09.87,0:13:13.62,Dialogue,,0000,0000,0000,,Trên chiến trường, hậu cần là rất quan trọng.
Dialogue: 0,0:13:13.71,0:13:17.08,Dialogue,,0000,0000,0000,,Những chiến binh ở tiền tuyến không thể thể hiện khả năng của họ nếu thiếu hậu cần.
Dialogue: 0,0:13:18.09,0:13:21.67,Dialogue,,0000,0000,0000,,Tham mưu đóng vai trò chủ yếu trong chỉ đạo để có kết quả đó.
Dialogue: 0,0:13:24.43,0:13:29.01,Dialogue,,0000,0000,0000,,Vậy, chúng ta sẽ bào bọn Nerima Daikon chứ ?
Dialogue: 0,0:13:37.61,0:13:40.57,Dialogue,,0000,0000,0000,,Cô đã cãi nhau với bạn trai -vũ khí bí mật- à ?
Dialogue: 0,0:13:40.65,0:13:42.69,Dialogue,,0000,0000,0000,,Hắn ta không phải là bạn trai tôi.
Dialogue: 0,0:13:42.78,0:13:45.90,Dialogue,,0000,0000,0000,,Có nghĩa là tôi vẫn còn có cơ hội.
Dialogue: 0,0:13:45.99,0:13:48.57,Dialogue,,0000,0000,0000,,Cô có muốn cùng tôi đấu với hắn ta không ?
Dialogue: 0,0:13:50.70,0:13:53.66,Dialogue,,0000,0000,0000,,Tôi chỉ mới đấu với hắn một lần...
Dialogue: 0,0:13:53.75,0:13:57.25,Dialogue,,0000,0000,0000,,nhưng tôi cảm thấy hắn ta là một phi công AS chuyên nghiệp.
Dialogue: 0,0:13:58.54,0:14:01.50,Dialogue,,0000,0000,0000,,Nhưng chỉ cần đi với cô, tôi nghĩ mình sẽ không thua hắn.
Dialogue: 0,0:14:01.59,0:14:03.38,Dialogue,,0000,0000,0000,,Không, tôi chắc chắn sẽ thắng.
Dialogue: 0,0:14:04.17,0:14:08.76,Dialogue,,0000,0000,0000,,Tôi nghĩ đây là lúc thích hợp để cô có thể điều khiển AS với tôi. Cô thấy sao ?
Dialogue: 0,0:14:10.18,0:14:11.10,Dialogue,,0000,0000,0000,,Chúng ta có thể thắng ư ?
Dialogue: 0,0:14:11.18,0:14:14.77,Dialogue,,0000,0000,0000,,Chắc chắn, tôi chưa bao giờ để quý cô phải thất vọng.
Dialogue: 0,0:14:15.73,0:14:17.27,Dialogue,,0000,0000,0000,,Được thôi !
Dialogue: 0,0:14:17.35,0:14:21.15,Dialogue,,0000,0000,0000,,Kính thưa quý vị, thời khắc cho trận chiến cuối cùng đã đến. \NĐó là kỵ mã chiến.
Dialogue: 0,0:14:21.23,0:14:23.23,Dialogue,,0000,0000,0000,,Trận đấu sử dụng hệ thống tính điểm đặc biệt.
Dialogue: 0,0:14:23.32,0:14:25.49,Dialogue,,0000,0000,0000,,Người thắng cuộc sẽ được một chiến thắng tuyệt đối.
Dialogue: 0,0:14:26.28,0:14:28.82,Dialogue,,0000,0000,0000,,Cậu có biết mọi người đâu hết rồi không ?
Dialogue: 0,0:14:28.91,0:14:31.70,Dialogue,,0000,0000,0000,,Tớ không biết. Cố lên, phi công BS !
Dialogue: 0,0:14:33.20,0:14:36.75,Dialogue,,0000,0000,0000,,Từ bây giờ tôi sẽ không hỏi cậu là ai .
Dialogue: 0,0:14:36.83,0:14:38.21,Dialogue,,0000,0000,0000,,Hãy làm hết sức mình!
Dialogue: 0,0:14:38.29,0:14:39.58,Dialogue,,0000,0000,0000,,Tôi cảm kích về việc đó.
Dialogue: 0,0:14:39.67,0:14:42.63,Dialogue,,0000,0000,0000,,Bởi vì chúng ta đã để gia đình Kazama tham chiến...
Dialogue: 0,0:14:42.71,0:14:44.96,Dialogue,,0000,0000,0000,,họ sẽ bị chê cười nếu chúng ta thua.
Dialogue: 0,0:14:45.05,0:14:46.63,Dialogue,,0000,0000,0000,,Chúng ta phải thắng !
Dialogue: 0,0:14:46.72,0:14:51.18,Dialogue,,0000,0000,0000,,Đòn tấn công bất ngờ của dân nghiệp dư đôi khi cũng có thể gây tổn thất cho kẻ địch.
Dialogue: 0,0:14:51.26,0:14:52.22,Dialogue,,0000,0000,0000,,Chúng ta sẽ thắng.
Dialogue: 0,0:14:53.10,0:14:55.35,Dialogue,,0000,0000,0000,,Mùi gì hôi thế này !
Dialogue: 0,0:14:55.43,0:14:57.73,Dialogue,,0000,0000,0000,,Cô sẽ phải điều khiển nó sớm thôi.
Dialogue: 0,0:14:57.81,0:15:00.31,Dialogue,,0000,0000,0000,,Cô chỉ cần di chuyển nếu như cô đã ở trong lớp PE.
Dialogue: 0,0:15:00.40,0:15:02.19,Dialogue,,0000,0000,0000,,Tôi sẽ giúp cô.
Dialogue: 0,0:15:03.11,0:15:04.73,Dialogue,,0000,0000,0000,,Đừng có chạm vào tôi !
Dialogue: 0,0:15:04.82,0:15:08.15,Dialogue,,0000,0000,0000,,Thời khắc cuối cùng của trận chung kết, kỵ mã chiến, chuẩn bị bắt đầu !
Dialogue: 0,0:15:09.74,0:15:13.49,Dialogue,,0000,0000,0000,,Đôi lúc cậu ta cũng dễ thương như thế.
Dialogue: 0,0:15:14.74,0:15:18.45,Dialogue,,0000,0000,0000,,Nhưng gần đây dường như họ không còn được như thế nữa.
Dialogue: 0,0:15:19.83,0:15:22.42,Dialogue,,0000,0000,0000,,Gần đầy tôi nghe nói họ đã cãi nhau.
Dialogue: 0,0:15:22.50,0:15:26.09,Dialogue,,0000,0000,0000,,Sau đó Ngài tham mưu đã phá hỏng mô hình quý bằng nhựa.
Dialogue: 0,0:15:26.17,0:15:28.42,Dialogue,,0000,0000,0000,,Khả năng phối hợp của Kazama không được tốt.
Dialogue: 0,0:15:28.51,0:15:31.88,Dialogue,,0000,0000,0000,,Khả năng phối hợp sẽ được hình thành trong trận chiến.
Dialogue: 0,0:15:31.97,0:15:33.97,Dialogue,,0000,0000,0000,,Cậu sẽ không bao giờ biết được cho đến khi trận chiến bắt đầu.
Dialogue: 0,0:15:34.05,0:15:35.14,Dialogue,,0000,0000,0000,,Bắt đầu !
Dialogue: 0,0:15:39.77,0:15:41.77,Dialogue,,0000,0000,0000,,Làm sao để điều khiển cái này ?!
Dialogue: 0,0:15:41.85,0:15:43.65,Dialogue,,0000,0000,0000,,Ba, con sẽ lái nó !
Dialogue: 0,0:15:43.73,0:15:46.19,Dialogue,,0000,0000,0000,,Con đang nói gì vậy? Con không thể làm ...
Dialogue: 0,0:15:46.73,0:15:49.53,Dialogue,,0000,0000,0000,,Cậu ấy đã đưa con cái này.
Dialogue: 0,0:15:53.03,0:15:54.45,Dialogue,,0000,0000,0000,,Làm gì bây giờ ?
Dialogue: 0,0:15:55.16,0:15:56.41,Dialogue,,0000,0000,0000,,Làm sao để điều khiển nó đây ?!
Dialogue: 0,0:15:56.49,0:16:00.87,Dialogue,,0000,0000,0000,,Đơn giản thôi ! Hãy đấm nếu như cô muốn đánh tên nào đó mà cô ghét.
Dialogue: 0,0:16:00.96,0:16:01.96,Dialogue,,0000,0000,0000,,Hiểu rồi.
Dialogue: 0,0:16:02.04,0:16:03.79,Dialogue,,0000,0000,0000,,Tiến lên nào !
Dialogue: 0,0:16:05.04,0:16:06.50,Dialogue,,0000,0000,0000,,Shinji, phòng thủ !
Dialogue: 0,0:16:10.38,0:16:12.68,Dialogue,,0000,0000,0000,,OS này thật là tuyệt !
Dialogue: 0,0:16:12.76,0:16:13.84,Dialogue,,0000,0000,0000,,Nó chặn lại rồi !
Dialogue: 0,0:16:13.93,0:16:16.89,Dialogue,,0000,0000,0000,,Không sao cả ! Cô có kỹ năng đấy ! Thử lại lần nữa đi!
Dialogue: 0,0:16:16.97,0:16:19.35,Dialogue,,0000,0000,0000,,Thế à ? Lên lần nữa nào !
Dialogue: 0,0:16:22.39,0:16:25.86,Dialogue,,0000,0000,0000,,Con AS chỉ huy đang di chuyển rất khác lạ so với bình thường.
Dialogue: 0,0:16:25.94,0:16:28.86,Dialogue,,0000,0000,0000,,Kaname-san, hắn ta nhất định đang điều khiển con AS đó.
Dialogue: 0,0:16:28.94,0:16:31.36,Dialogue,,0000,0000,0000,,Thế à. Tên ngốc đó !
Dialogue: 0,0:16:31.45,0:16:34.86,Dialogue,,0000,0000,0000,,Cậu không thể xem thường con AS chỉ huy đó. Hắn ta khá đấy !
Dialogue: 0,0:16:34.95,0:16:36.20,Dialogue,,0000,0000,0000,,Cậu nghĩ thế à ?
Dialogue: 0,0:16:36.28,0:16:39.58,Dialogue,,0000,0000,0000,,Tôi đã nghĩ cách đánh của nó có gì đó khác lạ so với bình thường.
Dialogue: 0,0:16:39.66,0:16:41.04,Dialogue,,0000,0000,0000,,Đội C, đội D !
Dialogue: 0,0:16:41.12,0:16:43.79,Dialogue,,0000,0000,0000,,Hỗ trợ đội B của Kazama từ 2 bên cánh!
Dialogue: 0,0:16:43.87,0:16:45.46,Dialogue,,0000,0000,0000,,Đội C, nghe rõ !
Dialogue: 0,0:16:45.54,0:16:46.71,Dialogue,,0000,0000,0000,,Đội D, nghe rõ !
Dialogue: 0,0:16:46.79,0:16:48.75,Dialogue,,0000,0000,0000,,Chúng ta làm gì đây ?
Dialogue: 0,0:16:48.84,0:16:51.09,Dialogue,,0000,0000,0000,,Nơi để sử dụng chiến thuật lần này chính là đây.
Dialogue: 0,0:16:51.17,0:16:54.43,Dialogue,,0000,0000,0000,,Chỉ cần chúng ta hạ gục được AS chỉ huy, chúng ta sẽ có cơ hội chiến thắng!
Dialogue: 0,0:16:54.51,0:16:57.30,Dialogue,,0000,0000,0000,,Mọi việc có vẻ thú vị rồi đây. Nghe rõ !
Dialogue: 0,0:16:58.85,0:17:00.01,Dialogue,,0000,0000,0000,,Nó đang đến đấy !
Dialogue: 0,0:17:00.72,0:17:01.97,Dialogue,,0000,0000,0000,,Ngưng ngay đi!
Dialogue: 0,0:17:02.06,0:17:03.64,Dialogue,,0000,0000,0000,,Đừng lo lắng.
Dialogue: 0,0:17:03.73,0:17:05.90,Dialogue,,0000,0000,0000,,Chúng ta sẽ hạ gục chỉ huy của kẻ địch!
Dialogue: 0,0:17:06.61,0:17:09.40,Dialogue,,0000,0000,0000,,Đội B ! Đội C ! Chúng ta sẽ chăm sóc tên đó !
Dialogue: 0,0:17:10.94,0:17:11.86,Dialogue,,0000,0000,0000,,Bọn chúng đang đến !
Dialogue: 0,0:17:11.94,0:17:14.90,Dialogue,,0000,0000,0000,,Đó là đòn tấn công "xích xuyên tam xích tinh" trong một hàng.
Dialogue: 0,0:17:14.99,0:17:15.99,Dialogue,,0000,0000,0000,,Cái gì ?!
Dialogue: 0,0:17:17.66,0:17:19.24,Dialogue,,0000,0000,0000,,Chúng sử dụng AS làm bàn đạp ư ?
Dialogue: 0,0:17:22.20,0:17:24.58,Dialogue,,0000,0000,0000,,Hạ thấp xuống!
Dialogue: 0,0:17:28.59,0:17:30.92,Dialogue,,0000,0000,0000,,Chúng đánh bại chúng tôi bằng đòn đó hằng năm.
Dialogue: 0,0:17:31.00,0:17:32.42,Dialogue,,0000,0000,0000,,Lạ thật...
Dialogue: 0,0:17:32.51,0:17:35.72,Dialogue,,0000,0000,0000,,Thời điểm, sức bật, ra quyết định...
Dialogue: 0,0:17:35.80,0:17:36.97,Dialogue,,0000,0000,0000,,Nó thật hoàn hảo !
Dialogue: 0,0:17:37.05,0:17:38.64,Dialogue,,0000,0000,0000,,Cảm giác thật đã !
Dialogue: 0,0:17:38.72,0:17:41.43,Dialogue,,0000,0000,0000,,Nếu cô đánh bại kẻ địch, cô sẽ cảm thấy đã hơn nữa!
Dialogue: 0,0:17:42.22,0:17:44.77,Dialogue,,0000,0000,0000,,Nhưng mà đừng có lại gần tôi !
Dialogue: 0,0:17:44.85,0:17:47.77,Dialogue,,0000,0000,0000,,Ba ! Ba điều khiển chân phải hơi chậm đó !
Dialogue: 0,0:17:47.86,0:17:50.23,Dialogue,,0000,0000,0000,,Ba có thể làm gì đây ?
Dialogue: 0,0:17:50.32,0:17:52.82,Dialogue,,0000,0000,0000,,Xin hãy chạy đi ! Chúng tôi sẽ lo khu vực này.
Dialogue: 0,0:17:52.90,0:17:56.74,Dialogue,,0000,0000,0000,,Cậu đang nói cái gì thế ? Tôi không thể bỏ các cậu ở lại được !
Dialogue: 0,0:17:56.82,0:18:00.07,Dialogue,,0000,0000,0000,,Những tham mưu cũng luôn chiến đấu hằng ngày.
Dialogue: 0,0:18:00.16,0:18:02.16,Dialogue,,0000,0000,0000,,Họ cũng là những chiến binh, giống như cậu vậy!
Dialogue: 0,0:18:05.16,0:18:07.21,Dialogue,,0000,0000,0000,,Đội Narashiro đang lâm vào tình thế khó khăn !
Dialogue: 0,0:18:07.29,0:18:09.83,Dialogue,,0000,0000,0000,,Liệu họ có bị hạ gục hoàn toàn một lần nữa hay không ?
Dialogue: 0,0:18:10.46,0:18:13.00,Dialogue,,0000,0000,0000,,Ngài tham mưu! Chúng tôi trông cậy vào ông.
Dialogue: 0,0:18:13.09,0:18:16.17,Dialogue,,0000,0000,0000,,Hãy cho chúng thấy tinh thần của lực lượng không quân Narashiro!
Dialogue: 0,0:18:16.93,0:18:20.39,Dialogue,,0000,0000,0000,,Shinji, ba là người vụng về.
Dialogue: 0,0:18:20.47,0:18:22.93,Dialogue,,0000,0000,0000,,Ba thậm chí không thể sửa mô hình bằng nhựa cho thật tốt.
Dialogue: 0,0:18:23.02,0:18:27.02,Dialogue,,0000,0000,0000,,Nhưng mà ba không thể bỏ cuộc như thế này.
Dialogue: 0,0:18:27.10,0:18:28.77,Dialogue,,0000,0000,0000,,Đúng rồi nhỉ.
Dialogue: 0,0:18:28.85,0:18:30.52,Dialogue,,0000,0000,0000,,Con sẽ...
Dialogue: 0,0:18:30.61,0:18:32.23,Dialogue,,0000,0000,0000,,...chiến đấu cùng ta chứ ?
Dialogue: 0,0:18:33.48,0:18:34.57,Dialogue,,0000,0000,0000,,Vâng...
Dialogue: 0,0:18:35.78,0:18:37.70,Dialogue,,0000,0000,0000,,Con sẽ chiến đấu!
Dialogue: 0,0:18:37.78,0:18:40.74,Dialogue,,0000,0000,0000,,Được, hãy tiến lên và chiến thắng.
Dialogue: 0,0:18:40.82,0:18:42.49,Dialogue,,0000,0000,0000,,Gửi các AS còn sót lại :
Dialogue: 0,0:18:42.58,0:18:46.37,Dialogue,,0000,0000,0000,,Chúng ta sẽ bào củ cải với Nerima Daikon !
Dialogue: 0,0:18:46.46,0:18:47.71,Dialogue,,0000,0000,0000,, Ba !
Dialogue: 0,0:18:47.79,0:18:50.88,Dialogue,,0000,0000,0000,,Tất cả tiến lên phía trước ! Chuẩn bị phản công !
Dialogue: 0,0:18:52.96,0:18:55.51,Dialogue,,0000,0000,0000,,Shinji! Sẵn sàng cho cú đấm phản bên trái!
Dialogue: 0,0:18:55.59,0:18:57.26,Dialogue,,0000,0000,0000,,Cú đấm phản bên trái, rõ !
Dialogue: 0,0:18:57.34,0:18:58.42,Dialogue,,0000,0000,0000,,Tấn công !
Dialogue: 0,0:19:00.89,0:19:02.05,Dialogue,,0000,0000,0000,,Chuyện gì đang xảy ra thế này ?
Dialogue: 0,0:19:02.14,0:19:05.97,Dialogue,,0000,0000,0000,,Tôi đã nói là khả năng phối hợp sẽ được hình thành trong trận chiến.
Dialogue: 0,0:19:06.64,0:19:09.35,Dialogue,,0000,0000,0000,,Chờ đã ! Họ đang đánh bại chúng ta !
Dialogue: 0,0:19:09.44,0:19:11.31,Dialogue,,0000,0000,0000,,Cái gì thế này ?!
Dialogue: 0,0:19:11.40,0:19:12.98,Dialogue,,0000,0000,0000,,Những đòn tấn công dữ dội của Narashiro!
Dialogue: 0,0:19:12.98,0:19:14.73,Dialogue,,0000,0000,0000,,Họ đang hạ gục AS của Nerima từng chiếc một .
Dialogue: 0,0:19:14.73,0:19:16.90,Dialogue,,0000,0000,0000,,Họ đang kiểm soát cục diện trận đấu!
Dialogue: 0,0:19:16.99,0:19:20.95,Dialogue,,0000,0000,0000,,Chúng ta sẽ hạ gục AS chỉ huy trước! Các đội còn lại sẵn sàng chưa ?
Dialogue: 0,0:19:21.03,0:19:22.07,Dialogue,,0000,0000,0000,,Nghe rõ !
Dialogue: 0,0:19:22.16,0:19:24.24,Dialogue,,0000,0000,0000,,Chúng ta sẽ sử dụng "củ cải phi thiên" ( Daikon Jump ) một lần nữa à ?
Dialogue: 0,0:19:24.33,0:19:26.24,Dialogue,,0000,0000,0000,,Đó là xích xuyên công ! ( Red Stream Attack! )
Dialogue: 0,0:19:29.16,0:19:31.46,Dialogue,,0000,0000,0000,,Bọn chúng đang đến! Đã quá muộn để né rồi !
Dialogue: 0,0:19:33.75,0:19:35.38,Dialogue,,0000,0000,0000,,Không ổn rồi ! Chúng ta sẽ thua mất !
Dialogue: 0,0:19:37.01,0:19:39.72,Dialogue,,0000,0000,0000,,Mẫu 96 có một điểm yếu ở phía mạn phải.
Dialogue: 0,0:19:40.34,0:19:42.64,Dialogue,,0000,0000,0000,,Shinji! Tấn công vào mạn phải !
Dialogue: 0,0:19:43.35,0:19:44.51,Dialogue,,0000,0000,0000,,Rõ !
Dialogue: 0,0:19:47.72,0:19:49.89,Dialogue,,0000,0000,0000,,Tiêu rồi ! Tay phải đã bị hủy !
Dialogue: 0,0:19:49.98,0:19:50.94,Dialogue,,0000,0000,0000,,Cái gì ?!
Dialogue: 0,0:19:51.02,0:19:51.81,Dialogue,,0000,0000,0000,,Ngay lúc này !
Dialogue: 0,0:19:51.90,0:19:53.31,Dialogue,,0000,0000,0000,,Nghe rõ !
Dialogue: 0,0:19:53.40,0:19:56.52,Dialogue,,0000,0000,0000,,Chúng ta sẽ thắng năm nay !
Dialogue: 0,0:19:56.61,0:19:58.28,Dialogue,,0000,0000,0000,,Đấm !
Dialogue: 0,0:19:59.82,0:20:04.03,Dialogue,,0000,0000,0000,,Trận chiến kết thúc! Đội Narashiro đã có một chiến thắng sát nút !
Dialogue: 0,0:20:07.87,0:20:10.62,Dialogue,,0000,0000,0000,,Nó như một giấc mơ. Cám ơn cậu !
Dialogue: 0,0:20:10.71,0:20:15.50,Dialogue,,0000,0000,0000,,Không... Lực lượng không quân Narashiro chỉ vừa phô diễn khả năng của mình thôi.
Dialogue: 0,0:20:15.59,0:20:17.42,Dialogue,,0000,0000,0000,,Ba !
Dialogue: 0,0:20:17.50,0:20:19.51,Dialogue,,0000,0000,0000,,Chúng ta đã thắng rồi !
Dialogue: 0,0:20:25.43,0:20:27.05,Dialogue,,0000,0000,0000,,Tránh xa tôi ra !
Dialogue: 0,0:20:27.14,0:20:29.56,Dialogue,,0000,0000,0000,,Trận đấu đã kết thúc rồi !
Dialogue: 0,0:20:29.64,0:20:31.89,Dialogue,,0000,0000,0000,,Tôi không muốn thừa nhận sai lầm của mình.
Dialogue: 0,0:20:31.98,0:20:34.02,Dialogue,,0000,0000,0000,,Sai lầm của tuổi trẻ bồng bột...
Dialogue: 0,0:20:34.77,0:20:35.98,Dialogue,,0000,0000,0000,,Đủ rồi !
Dialogue: 0,0:20:42.28,0:20:46.57,Dialogue,,0000,0000,0000,,Lần đầu tiên tớ nhận ra rằng công việc của ba cũng rất quan trọng.
Dialogue: 0,0:20:46.66,0:20:49.04,Dialogue,,0000,0000,0000,,Cám ơn cậu, Sagara-kun.
Dialogue: 0,0:20:49.12,0:20:53.04,Dialogue,,0000,0000,0000,,Cũng nhờ có Sagara-kun và mọi người nhỉ ?
Dialogue: 0,0:20:53.12,0:20:55.96,Dialogue,,0000,0000,0000,,Chúng ta không phải là người chiến thắng.
Dialogue: 0,0:20:56.04,0:20:59.42,Dialogue,,0000,0000,0000,,Lực lượng không quân Narashiro và ngài tham mưu đã thắng trận đấu này.
Dialogue: 0,0:21:01.88,0:21:04.18,Dialogue,,0000,0000,0000,,Ngài phi công BS...
Dialogue: 0,0:21:04.26,0:21:05.84,Dialogue,,0000,0000,0000,,Của tôi...
Dialogue: 0,0:21:06.80,0:21:10.77,Dialogue,,0000,0000,0000,,Kỷ niệm mùa hè của tôi đâu rồiiiii ?!
Dialogue: 0,0:21:13.23,0:21:24.82,Songs (Romanji),,0000,0000,0000,,Kokoro ni chiisana hana ga saiteru
Dialogue: 0,0:21:24.91,0:21:36.08,Songs (Romanji),,0000,0000,0000,,Kimi kara moratta karenai hana ga
Dialogue: 0,0:21:36.17,0:21:42.00,Songs (Romanji),,0000,0000,0000,,Shinjiru koto mo kowagaranai kurai
Dialogue: 0,0:21:42.09,0:21:49.35,Songs (Romanji),,0000,0000,0000,,Tsuyoku nareta kara
Dialogue: 0,0:21:49.43,0:21:55.18,Songs (Romanji),,0000,0000,0000,,Kimi ni aete ureshikatta
Dialogue: 0,0:21:55.27,0:22:01.65,Songs (Romanji),,0000,0000,0000,,Tsunaida te ga hokoridatta
Dialogue: 0,0:22:01.73,0:22:08.45,Songs (Romanji),,0000,0000,0000,,Ima wa betsubetsu no sora miagete itemo
Dialogue: 0,0:22:08.53,0:22:16.91,Songs (Romanji),,0000,0000,0000,,Hora arukeru hitori demo
Dialogue: 0,0:21:13.23,0:21:24.82,Songs,,0000,0000,0000,,Bông hoa nhỏ trong tim em
Dialogue: 0,0:21:24.91,0:21:36.08,Songs,,0000,0000,0000,,Bông hoa không bao giờ tàn mà anh đã tặng em
Dialogue: 0,0:21:36.17,0:21:42.00,Songs,,0000,0000,0000,,Em không hề sợ hãi, thậm chí luôn tin tưởng
Dialogue: 0,0:21:42.09,0:21:49.35,Songs,,0000,0000,0000,,Đó là điều khiến em trở nên mạnh mẽ
Dialogue: 0,0:21:49.43,0:21:55.18,Songs,,0000,0000,0000,,Em rất hạnh phúc vì đã gặp anh
Dialogue: 0,0:21:55.27,0:22:01.65,Songs,,0000,0000,0000,,Em tự hào khi nắm tay anh
Dialogue: 0,0:22:01.73,0:22:08.45,Songs,,0000,0000,0000,,Dù cho hai ta hướng về bầu trời khác nhau
Dialogue: 0,0:22:08.53,0:22:16.91,Songs,,0000,0000,0000,,Anh thấy không, em có thể tự mình bước đi
Dialogue: 0,0:22:25.55,0:22:30.13,Dialogue,,0000,0000,0000,,"Bộ phim này hoàn toàn là hư cấu.\N Tên nhân vật và các tổ chức trong phim không liên quan đến bất cứ cá nhân, tổ chức nào."
Dialogue: 0,0:22:30.39,0:22:32.14,Dialogue,,0000,0000,0000,,Sousuke phải đi công tác à ? Cậu đi đâu thế ?
Dialogue: 0,0:22:32.22,0:22:34.47,Dialogue,,0000,0000,0000,,Đất nước Helmajistan. \N Tại sao ?
Dialogue: 0,0:22:34.56,0:22:35.85,Dialogue,,0000,0000,0000,,Nhiệm vụ ám sát.
Dialogue: 0,0:22:35.93,0:22:37.52,Dialogue,,0000,0000,0000,,Nghiêm túc chứ? \NTôi rất nghiêm túc.
Dialogue: 0,0:22:37.60,0:22:42.36,Dialogue,,0000,0000,0000,,Kì tới Full Metal Panic: tập 15, "Gió thổi nơi quê nhà, phần 1."
Dialogue: 0,0:22:42.44,0:22:43.73,Dialogue,,0000,0000,0000,,Cậu nhất định phải trở về đấy.
Dialogue: 0,0:22:43.82,0:22:45.19,Dialogue,,0000,0000,0000,,Nếu tôi may mắn.
