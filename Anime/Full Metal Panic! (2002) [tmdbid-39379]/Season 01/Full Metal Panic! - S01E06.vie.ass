Dialogue: 0,0:00:16.60,0:00:23.89,Songs (Romanji),,0000,0000,0000,,Futari de nigebasho sagashite
Dialogue: 0,0:00:23.98,0:00:31.40,Songs (Romanji),,0000,0000,0000,,Hashitta tenki ame no naka
Dialogue: 0,0:00:31.49,0:00:38.83,Songs (Romanji),,0000,0000,0000,,Tatoeba nanika wo ushinau toshite mo
Dialogue: 0,0:00:38.91,0:00:47.67,Songs (Romanji),,0000,0000,0000,,Mamotte ikanakya hitotsu dake wa
Dialogue: 0,0:00:47.75,0:00:54.97,Songs (Romanji),,0000,0000,0000,,Kono sekai ni umareta sono imi wo
Dialogue: 0,0:00:55.05,0:01:00.47,Songs (Romanji),,0000,0000,0000,,Kimi to mitsuke ni yukou
Dialogue: 0,0:01:00.56,0:01:05.64,Songs (Romanji),,0000,0000,0000,,Itami sae mo kakaenagara
Dialogue: 0,0:01:05.73,0:01:12.53,Songs (Romanji),,0000,0000,0000,,Atarashii keshiki mukae ni yukou
Dialogue: 0,0:00:16.60,0:00:23.89,Songs,,0000,0000,0000,,Hai chúng ta đang tìm một nơi để trốn thoát
Dialogue: 0,0:00:23.98,0:00:31.40,Songs,,0000,0000,0000,,Cùng chạy dưới ánh nắng chói chang
Dialogue: 0,0:00:31.49,0:00:38.83,Songs,,0000,0000,0000,,Ngay cả khi em mất một điều gì khác
Dialogue: 0,0:00:38.91,0:00:47.67,Songs,,0000,0000,0000,,Thì em chỉ muốn giữ lấy một điều duy nhất
Dialogue: 0,0:00:47.75,0:00:54.97,Songs,,0000,0000,0000,,Ý nghĩa khi được sinh ra ở thế giới này
Dialogue: 0,0:00:55.05,0:01:00.47,Songs,,0000,0000,0000,,Hãy đi cùng em và tìm hiểu
Dialogue: 0,0:01:00.56,0:01:05.64,Songs,,0000,0000,0000,,Giữ chặt lấy nó, dù cho là nỗi đau
Dialogue: 0,0:01:05.73,0:01:12.53,Songs,,0000,0000,0000,,Cùng tiến lên đón chào thế giới mới
Dialogue: 0,0:01:15.53,0:01:19.88,Dialogue,,0000,0000,0000,,Translator, Encoder : MaHiME
Dialogue: 0,0:01:21.88,0:01:27.88,Dialogue,,0000,0000,0000,,Waya fansub presents
Dialogue: 0,0:01:33.50,0:01:35.20,Dialogue,,0000,0000,0000,,"Sống sót"
Dialogue: 0,0:01:36.30,0:01:37.93,Dialogue,,0000,0000,0000,,Nóng nực quá!
Dialogue: 0,0:01:38.01,0:01:39.34,Dialogue,,0000,0000,0000,,Đừng chạm vào đó chứ !
Dialogue: 0,0:01:39.43,0:01:42.10,Dialogue,,0000,0000,0000,,Không biết Kana-chan có ổn không ?
Dialogue: 0,0:01:42.18,0:01:45.06,Dialogue,,0000,0000,0000,,Cô nghe nói rằng em ấy sẽ trở về trên chuyến bay khác.
Dialogue: 0,0:01:47.48,0:01:52.02,Dialogue,,0000,0000,0000,,Kazama-kun, đừng khóc nữa. Tớ biết là cậu đang lo lắng cho Sagara-kun.
Dialogue: 0,0:01:52.11,0:01:56.40,Dialogue,,0000,0000,0000,,Không phải. Tớ thấy sung sướng khi được tận mắt chứng kiến trận chiến sự giữa các M9.
Dialogue: 0,0:01:56.49,0:01:59.87,Dialogue,,0000,0000,0000,,Cho dù có bị lạc đạn chết tớ cũng không quan tâm.
Dialogue: 0,0:02:13.21,0:02:16.67,Dialogue,,0000,0000,0000,,Chiến dịch đã kết thúc. Tiểu đoàn của địch đang đến gần ta.
Dialogue: 0,0:02:16.76,0:02:21.22,Dialogue,,0000,0000,0000,,Chờ đã! Tôi vẫn chưa có hồi âm của Uruz 6, Kurz...
Dialogue: 0,0:02:21.30,0:02:22.93,Dialogue,,0000,0000,0000,,hay Sousuke và cô gái kia.
Dialogue: 0,0:02:23.01,0:02:25.02,Dialogue,,0000,0000,0000,,Đây là Teywas 1 2.
Dialogue: 0,0:02:25.10,0:02:27.68,Dialogue,,0000,0000,0000,,Tôi vừa tìm thấy xác của một M9 tại nhánh sông phía bắc.
Dialogue: 0,0:02:27.77,0:02:29.73,Dialogue,,0000,0000,0000,,Tôi tin chắc rằng đó là M9 của Uruz 6.
Dialogue: 0,0:02:30.90,0:02:32.94,Dialogue,,0000,0000,0000,,Cái gì? Phi công vẫn an toàn chứ ?
Dialogue: 0,0:02:33.02,0:02:35.36,Dialogue,,0000,0000,0000,,Không thể xác nhận. Có quá nhiều khói xung quanh.
Dialogue: 0,0:02:35.44,0:02:37.28,Dialogue,,0000,0000,0000,,Tìm cậu ta đi! Còn Sousuke thì sao ?
Dialogue: 0,0:02:37.36,0:02:41.24,Dialogue,,0000,0000,0000,,Tôi cũng muốn lắm nhưng chúng ta không có thời gian để tìm Kurz và Sousuke.
Dialogue: 0,0:02:41.32,0:02:44.91,Dialogue,,0000,0000,0000,,Cho tôi ít thời gian! Để tôi...
Dialogue: 0,0:02:43.32,0:02:44.91,Dialogue,,0000,0000,0000,,{\i1}Hãy ngưng việc tìm kiếm!{\i0}
Dialogue: 0,0:02:44.99,0:02:46.79,Dialogue,,0000,0000,0000,,Và trở về ngay lập tức.
Dialogue: 0,0:02:49.58,0:02:51.21,Dialogue,,0000,0000,0000,,Phó chỉ huy...
Dialogue: 0,0:02:51.29,0:02:54.04,Dialogue,,0000,0000,0000,,Quân tiếp viện của địch đã vượt qua cầu.
Dialogue: 0,0:02:54.13,0:02:55.92,Dialogue,,0000,0000,0000,,Các máy bay đánh chặn cũng đang tiến đến.
Dialogue: 0,0:02:56.01,0:02:58.01,Dialogue,,0000,0000,0000,,Chúng ta phải tiêu hủy mọi thứ trong vòng 1 phút.
Dialogue: 0,0:02:59.09,0:03:01.01,Dialogue,,0000,0000,0000,,Teywas 1 2!
Dialogue: 0,0:03:01.09,0:03:04.76,Dialogue,,0000,0000,0000,,Bắn tất cả tên lửa còn lại vào xác M9.
Dialogue: 0,0:03:04.85,0:03:07.06,Dialogue,,0000,0000,0000,,Không được để sót bất cứ một mảnh vỡ nào.
Dialogue: 0,0:03:07.14,0:03:08.68,Dialogue,,0000,0000,0000,,Teywas 1 2, nghe rõ.
Dialogue: 0,0:03:08.77,0:03:09.73,Dialogue,,0000,0000,0000,,Đừn...
Dialogue: 0,0:03:18.99,0:03:22.91,Dialogue,,0000,0000,0000,,Uruz 2, mau chóng trở về tàu cùng với trực thăng.
Dialogue: 0,0:03:22.99,0:03:25.16,Dialogue,,0000,0000,0000,,Cô có nghe rõ không ?
Dialogue: 0,0:03:25.24,0:03:27.62,Dialogue,,0000,0000,0000,,Uruz 2, nghe rõ.
Dialogue: 0,0:03:34.59,0:03:36.38,Dialogue,,0000,0000,0000,,Đồ vô dụng!
Dialogue: 0,0:03:36.46,0:03:39.55,Dialogue,,0000,0000,0000,,Mới sử dụng nó một lần mà đã ngưng hoạt động.
Dialogue: 0,0:03:42.22,0:03:43.97,Dialogue,,0000,0000,0000,,Kalinin...
Dialogue: 0,0:03:45.26,0:03:47.06,Dialogue,,0000,0000,0000,,Lão ta cũng ở đây ư ?
Dialogue: 0,0:03:48.98,0:03:49.64,Dialogue,,0000,0000,0000,,Sao?
Dialogue: 0,0:03:49.68,0:03:50.48,Dialogue,,0000,0000,0000,,Là tôi đây.
Dialogue: 0,0:03:50.56,0:03:52.23,Dialogue,,0000,0000,0000,,Một người lính cứu hỏa nói là đã thấy gì đó rất lạ.
Dialogue: 0,0:03:52.31,0:03:53.31,Dialogue,,0000,0000,0000,,Cái gì?
Dialogue: 0,0:03:53.40,0:03:59.57,Dialogue,,0000,0000,0000,,Anh ta nói là đã thấy hai người 1 nam và 1 nữ ở gần hàng rào phía tây.
Dialogue: 0,0:03:59.65,0:04:01.90,Dialogue,,0000,0000,0000,,Cả hai đã bỏ chạy và biến mất vào rừng.
Dialogue: 0,0:04:01.99,0:04:03.57,Dialogue,,0000,0000,0000,,Kashim...
Dialogue: 0,0:04:04.32,0:04:07.03,Dialogue,,0000,0000,0000,,Sagara-kun, cậu thật sự ổn chứ ?
Dialogue: 0,0:04:07.12,0:04:11.71,Dialogue,,0000,0000,0000,,Vẫn chưa an toàn, chúng ta không còn cách nào khác ngoài việc rời khỏi căn cứ.
Dialogue: 0,0:04:11.79,0:04:13.37,Dialogue,,0000,0000,0000,,Không phải thế...
Dialogue: 0,0:04:15.21,0:04:16.59,Dialogue,,0000,0000,0000,,Mưa rồi...
Dialogue: 0,0:04:17.71,0:04:20.38,Dialogue,,0000,0000,0000,,Nè, chúng ta nghỉ chân một chút đi.
Dialogue: 0,0:04:23.55,0:04:26.05,Dialogue,,0000,0000,0000,,Cậu có chuyện gì à ?
Dialogue: 0,0:04:26.14,0:04:29.43,Dialogue,,0000,0000,0000,,Có một cái hộp nhỏ trong túi áo khoác của tôi.
Dialogue: 0,0:04:29.52,0:04:30.93,Dialogue,,0000,0000,0000,,Cô có thể lấy nó...
Dialogue: 0,0:04:33.52,0:04:34.85,Dialogue,,0000,0000,0000,,Cái này à ?
Dialogue: 0,0:04:36.48,0:04:38.11,Dialogue,,0000,0000,0000,,Bọn họ là ai vậy ?
Dialogue: 0,0:04:38.19,0:04:40.07,Dialogue,,0000,0000,0000,,Họ đã từng là đồng đội của tôi.
Dialogue: 0,0:04:40.15,0:04:41.61,Dialogue,,0000,0000,0000,,Đã từng ?
Dialogue: 0,0:04:48.33,0:04:50.58,Dialogue,,0000,0000,0000,,Sagara-kun, vết thương đó...
Dialogue: 0,0:04:50.66,0:04:55.17,Dialogue,,0000,0000,0000,,Cũng may là nội tạng và các động mạch không bị tổn thương.
Dialogue: 0,0:04:55.25,0:04:57.83,Dialogue,,0000,0000,0000,,Nó sẽ không ảnh hưởng nhiều đến nhiệm vụ của tôi.
Dialogue: 0,0:04:57.92,0:04:59.29,Dialogue,,0000,0000,0000,,Nhiệm vụ ?
Dialogue: 0,0:04:59.38,0:05:02.42,Dialogue,,0000,0000,0000,,Đi thôi. Kẻ địch đang đến đấy.
Dialogue: 0,0:05:05.97,0:05:07.34,Dialogue,,0000,0000,0000,,Sao thế ?
Dialogue: 0,0:05:09.06,0:05:11.60,Dialogue,,0000,0000,0000,,Nhanh lên, kẻ thù đang...
Dialogue: 0,0:05:10.06,0:05:11.60,Dialogue,,0000,0000,0000,,{\i1}Đừng lại gần đây!{\i0}
Dialogue: 0,0:05:19.02,0:05:21.73,Dialogue,,0000,0000,0000,,Cô đang sợ tôi phải không ?
Dialogue: 0,0:05:21.82,0:05:26.74,Dialogue,,0000,0000,0000,,Điều đó hoàn toàn tự nhiên. Với cô, tôi giống như...
Dialogue: 0,0:05:26.82,0:05:32.20,Dialogue,,0000,0000,0000,,Nhưng mà những gì tôi có thể nghĩ đến lúc này là đưa cô trở về an toàn.
Dialogue: 0,0:05:32.29,0:05:36.46,Dialogue,,0000,0000,0000,,Tôi không thể đảm bảo rằng chúng ta có thể thoát, nhưng cô sẽ tin tôi chứ ?
Dialogue: 0,0:05:39.09,0:05:40.21,Dialogue,,0000,0000,0000,,Dừng lại!
Dialogue: 0,0:05:44.22,0:05:45.22,Dialogue,,0000,0000,0000,,Kurz!
Dialogue: 0,0:05:45.30,0:05:48.09,Dialogue,,0000,0000,0000,,Tôi chịu không nổi nữa rồi.
Dialogue: 0,0:05:50.93,0:05:55.31,Dialogue,,0000,0000,0000,,Thượng sĩ Mao, cô có nghĩa vụ phải chờ đợi ở khoang máy bay.
Dialogue: 0,0:05:54.22,0:05:55.31,Dialogue,,0000,0000,0000,,{\i1}Làm ơn, cho tôi 2 giờ.{\i0}
Dialogue: 0,0:05:55.39,0:05:57.19,Dialogue,,0000,0000,0000,,Không, chỉ cần 1 giờ thôi.
Dialogue: 0,0:05:57.27,0:06:00.02,Dialogue,,0000,0000,0000,,Tôi sẽ trở lại đúng giờ sau khi đã tìm Sousuke và Kurz.
Dialogue: 0,0:06:00.11,0:06:05.07,Dialogue,,0000,0000,0000,,Cô đang muốn mạo hiểm con tàu trị giá 5 triệu $ cùng 250 thuyền viên sao ?
Dialogue: 0,0:06:05.15,0:06:08.78,Dialogue,,0000,0000,0000,,Họ là người của tôi. Tôi phải có trách nhiệm với họ.
Dialogue: 0,0:06:08.87,0:06:12.83,Dialogue,,0000,0000,0000,,Bên ngoài trời đang mưa, hệ thống tàng hình ESC cũng vô dụng.
Dialogue: 0,0:06:12.91,0:06:14.04,Dialogue,,0000,0000,0000,,Việc tìm họ là bất khả thi.
Dialogue: 0,0:06:14.12,0:06:17.16,Dialogue,,0000,0000,0000,,Tôi biết nó có vẻ điên rồ, nhưng mà...
Dialogue: 0,0:06:17.25,0:06:20.75,Dialogue,,0000,0000,0000,,Chỉ có người của phòng chỉ huy mới được phép vào đây.
Dialogue: 0,0:06:23.63,0:06:25.76,Dialogue,,0000,0000,0000,,Ông lúc nào cũng thế.
Dialogue: 0,0:06:25.84,0:06:28.47,Dialogue,,0000,0000,0000,,Làm sao ông có thể lạnh lùng như vậy?
Dialogue: 0,0:06:29.97,0:06:32.68,Dialogue,,0000,0000,0000,,Bởi vì ta cần phải như vậy.
Dialogue: 0,0:06:35.60,0:06:38.77,Dialogue,,0000,0000,0000,,Chú đến để hỏi cháu là chúng ta có thể chờ trong bao lâu, phải không ?
Dialogue: 0,0:06:39.98,0:06:42.27,Dialogue,,0000,0000,0000,,Ngay lúc này đây chúng ta không thể chờ dù chỉ 1 phút.
Dialogue: 0,0:06:42.36,0:06:45.32,Dialogue,,0000,0000,0000,,Tàu vũ trang của kẻ địch đang tiến đến gần.
Dialogue: 0,0:06:45.40,0:06:47.44,Dialogue,,0000,0000,0000,,Cô nói đúng.
Dialogue: 0,0:06:47.53,0:06:50.20,Dialogue,,0000,0000,0000,,Nhưng mà cháu muốn cứu Sagara-san và những người khác.
Dialogue: 0,0:06:50.28,0:06:55.12,Dialogue,,0000,0000,0000,,Vâng, có khả năng là trung sĩ Weber vẫn còn sống.
Dialogue: 0,0:06:55.20,0:06:59.25,Dialogue,,0000,0000,0000,,Nếu như cháu có thể dành vài phút trong khi chúng ta vẫn còn trên mặt nước,
Dialogue: 0,0:06:59.33,0:07:01.58,Dialogue,,0000,0000,0000,,thì chú sẽ có ý tưởng gì ?
Dialogue: 0,0:07:01.67,0:07:02.92,Dialogue,,0000,0000,0000,,Có thể sao ?
Dialogue: 0,0:07:03.00,0:07:07.13,Dialogue,,0000,0000,0000,,Điều đó sẽ không thể nếu như đây là chiếc tàu ngầm bình thường.
Dialogue: 0,0:07:07.22,0:07:12.59,Dialogue,,0000,0000,0000,,Nếu tôi không lầm, có lẽ chúng ta cần phải sử dụng "thứ đó".
Dialogue: 0,0:07:12.68,0:07:13.97,Dialogue,,0000,0000,0000,,"Thứ đó" ?
Dialogue: 0,0:07:14.06,0:07:16.14,Dialogue,,0000,0000,0000,,ARX-7...
Dialogue: 0,0:07:16.22,0:07:18.18,Dialogue,,0000,0000,0000,,Arbalest.
Dialogue: 0,0:07:19.19,0:07:21.65,Dialogue,,0000,0000,0000,,Vậy là tên màu bạc đó đã hạ cậu ?
Dialogue: 0,0:07:21.73,0:07:24.69,Dialogue,,0000,0000,0000,,Ờ, nhưng tôi không biết chuyện gì đã xảy ra.
Dialogue: 0,0:07:24.77,0:07:28.61,Dialogue,,0000,0000,0000,,Tôi đã dụ hắn đến gần và bắn hắn với khẩu 57 li.
Dialogue: 0,0:07:28.69,0:07:32.24,Dialogue,,0000,0000,0000,,Tôi nghĩ rằng mình đã giết được hắn nhưng rốt cuộc lại bị thổi tung thành từng mảnh.
Dialogue: 0,0:07:32.32,0:07:34.87,Dialogue,,0000,0000,0000,,Cậu có nghĩ rằng hắn sử dụng một loại bom nào đó ?
Dialogue: 0,0:07:34.95,0:07:38.04,Dialogue,,0000,0000,0000,,Không, tôi không nghĩ thế.
Dialogue: 0,0:07:38.12,0:07:41.29,Dialogue,,0000,0000,0000,,Nó giống như là có ai đó dùng cây búa vô hình đập thẳng vào tôi vậy.
Dialogue: 0,0:07:41.37,0:07:42.29,Dialogue,,0000,0000,0000,,Kurz-kun!
Dialogue: 0,0:07:42.38,0:07:44.33,Dialogue,,0000,0000,0000,,Được rồi. Đừng nói nữa.
Dialogue: 0,0:07:50.34,0:07:53.26,Dialogue,,0000,0000,0000,,Nếu chúng ta băng ngang qua đây, chúng ta sẽ đến được bờ biển.
Dialogue: 0,0:07:53.34,0:07:57.51,Dialogue,,0000,0000,0000,,Cậu nói " Nếu như băng ngang qua...", nhưng mà nếu chúng ta đi qua khu vực trống trải thế này...
Dialogue: 0,0:07:57.60,0:08:01.23,Dialogue,,0000,0000,0000,,Phải, bọn chúng sẽ dễ dàng phát hiện chúng ta.
Dialogue: 0,0:08:01.31,0:08:03.69,Dialogue,,0000,0000,0000,,Vậy chúng ta sẽ làm sao đây ?
Dialogue: 0,0:08:03.77,0:08:04.56,Dialogue,,0000,0000,0000,,Chidori...
Dialogue: 0,0:08:04.65,0:08:05.86,Dialogue,,0000,0000,0000,,Gì thế ?
Dialogue: 0,0:08:05.94,0:08:08.65,Dialogue,,0000,0000,0000,,Tôi đã nghĩ đến việc này trước khi chúng ta đến đây.
Dialogue: 0,0:08:08.73,0:08:11.03,Dialogue,,0000,0000,0000,,Khoảng cách từ đây đến bờ biển là khá xa.
Dialogue: 0,0:08:11.11,0:08:14.61,Dialogue,,0000,0000,0000,,Cả ba chúng ta cùng chạy thoát là điều không thể.
Dialogue: 0,0:08:14.70,0:08:17.70,Dialogue,,0000,0000,0000,,Cho nên tôi và Kurz sẽ ở lại đây và đánh lạc hướng kẻ địch.
Dialogue: 0,0:08:17.79,0:08:22.58,Dialogue,,0000,0000,0000,,Chúng tôi sẽ cố gắng kéo dài thời gian nhiều nhất có thể.
Dialogue: 0,0:08:22.67,0:08:24.46,Dialogue,,0000,0000,0000,,Cậu đang nói cái gì thế ?
Dialogue: 0,0:08:24.54,0:08:27.34,Dialogue,,0000,0000,0000,,Hãy cầm lấy radio và chạy ra bờ biển.
Dialogue: 0,0:08:27.42,0:08:30.09,Dialogue,,0000,0000,0000,,Khoảng cách liên lạc của nó khá hạn chế...
Dialogue: 0,0:08:30.17,0:08:32.97,Dialogue,,0000,0000,0000,,nhưng nếu đồng đội của tôi ở ngoài đó, họ sẽ liên lạc với cô.
Dialogue: 0,0:08:34.39,0:08:36.51,Dialogue,,0000,0000,0000,,Tớ phải thoát một mình ư ?
Dialogue: 0,0:08:36.60,0:08:41.31,Dialogue,,0000,0000,0000,,Đừng lo. Nhiệm vụ của chúng tôi là bảo vệ cô.
Dialogue: 0,0:08:41.39,0:08:44.35,Dialogue,,0000,0000,0000,,Cô nhất định phải sống.
Dialogue: 0,0:08:46.81,0:08:48.44,Dialogue,,0000,0000,0000,,Đi đi!
Dialogue: 0,0:08:59.58,0:09:01.04,Dialogue,,0000,0000,0000,,Tớ không muốn thế!
Dialogue: 0,0:09:02.33,0:09:03.33,Dialogue,,0000,0000,0000,,Chidori...
Dialogue: 0,0:09:03.41,0:09:07.71,Dialogue,,0000,0000,0000,,Tớ nói là tớ không muốn. Sagara-kun, rốt cuộc thì cậu thật sự là một tên ngốc.
Dialogue: 0,0:09:07.79,0:09:10.21,Dialogue,,0000,0000,0000,,Cậu đang nghĩ, "tôi không quan tâm nếu tôi có chết"...
Dialogue: 0,0:09:10.30,0:09:13.42,Dialogue,,0000,0000,0000,,hoặc những thứ ngu ngốc giống như thế, đúng không?
Dialogue: 0,0:09:13.51,0:09:16.22,Dialogue,,0000,0000,0000,,Cậu nghĩ như thế là ngầu lắm sao...
Dialogue: 0,0:09:16.30,0:09:20.31,Dialogue,,0000,0000,0000,,thỏa mãn với bản thân mình và không nghĩ đến cảm xúc của tớ ?
Dialogue: 0,0:09:20.39,0:09:27.02,Dialogue,,0000,0000,0000,,Nói cho cậu biết tớ chẳng thấy vui chút xíu nào khi được cứu bởi tên nghiện quân đội ủ rũ như cậu.
Dialogue: 0,0:09:27.10,0:09:28.94,Dialogue,,0000,0000,0000,,Cậu rõ chứ?!
Dialogue: 0,0:09:35.15,0:09:37.32,Dialogue,,0000,0000,0000,,Tớ đoán là cậu vẫn chưa hiểu.
Dialogue: 0,0:09:37.41,0:09:41.79,Dialogue,,0000,0000,0000,,Tớ nói là tại sao chúng ta không nghĩ cách để cùng nhau sống sót ?
Dialogue: 0,0:09:41.87,0:09:44.00,Dialogue,,0000,0000,0000,,Đừng bỏ cuộc dễ dàng thế chứ!
Dialogue: 0,0:09:44.08,0:09:45.58,Dialogue,,0000,0000,0000,,Không thể! Không còn cách nào khác!
Dialogue: 0,0:09:45.67,0:09:47.87,Dialogue,,0000,0000,0000,,Chúng ta sẽ suy nghĩ về việc đó.
Dialogue: 0,0:09:47.96,0:09:51.04,Dialogue,,0000,0000,0000,,Ví dụ như chúng ta có thể đốt lửa xung quanh đây để tạo thành cháy rừng.
Dialogue: 0,0:09:51.13,0:09:53.13,Dialogue,,0000,0000,0000,,Sau đó lợi dụng sự hỗn loạn đó và chạy thoát.
Dialogue: 0,0:09:53.21,0:09:55.76,Dialogue,,0000,0000,0000,,Đại loại như thế.
Dialogue: 0,0:09:55.84,0:09:57.63,Dialogue,,0000,0000,0000,,Chidori, hãy nghe tôi.
Dialogue: 0,0:09:57.72,0:09:59.34,Dialogue,,0000,0000,0000,,Tôi là dân chuyên nghiệp.
Dialogue: 0,0:09:59.43,0:10:03.72,Dialogue,,0000,0000,0000,,Tôi đã xem xét mọi tình huống và chọn ra cách tốt nhất.
Dialogue: 0,0:10:03.81,0:10:07.19,Dialogue,,0000,0000,0000,,Cậu muốn tớ nói bao nhiêu lần mới hiểu?! Tớ không muốn làm thế!
Dialogue: 0,0:10:07.27,0:10:09.65,Dialogue,,0000,0000,0000,,Cô phải làm! Hãy đi đi!
Dialogue: 0,0:10:19.24,0:10:21.41,Dialogue,,0000,0000,0000,,Nếu tớ không đi, cậu sẽ bắn tớ ?
Dialogue: 0,0:10:21.49,0:10:24.74,Dialogue,,0000,0000,0000,,Phải, sẽ tốt hơn nếu cô chết tại đây, ngay bây giờ...
Dialogue: 0,0:10:24.83,0:10:27.62,Dialogue,,0000,0000,0000,,còn hơn bị kẻ địch bắt và sống không bằng chết.
Dialogue: 0,0:10:32.00,0:10:37.13,Dialogue,,0000,0000,0000,,Sagara-kun, chẳng phải cậu đã bảo tớ hãy tin cậu ?
Dialogue: 0,0:10:37.22,0:10:39.72,Dialogue,,0000,0000,0000,,Vậy thì tớ tin cậu.
Dialogue: 0,0:10:39.80,0:10:44.51,Dialogue,,0000,0000,0000,,Tớ có thể chịu đựng được bất cứ điều gì khi có cậu bên cạnh.
Dialogue: 0,0:10:44.60,0:10:49.06,Dialogue,,0000,0000,0000,,Bất kể tớ có kiệt sức, đau đớn thậm chí là cái chết...
Dialogue: 0,0:10:49.15,0:10:51.19,Dialogue,,0000,0000,0000,,Tớ cũng có thể chịu đựng được.
Dialogue: 0,0:10:51.27,0:10:54.40,Dialogue,,0000,0000,0000,,Vậy nên làm ơn đừng nói những điều như thế.
Dialogue: 0,0:10:54.48,0:10:57.44,Dialogue,,0000,0000,0000,,Chúng ta cùng trở về nhé, Sagara-kun.
Dialogue: 0,0:11:00.36,0:11:01.36,Dialogue,,0000,0000,0000,,Chidori...
Dialogue: 0,0:11:01.45,0:11:03.41,Dialogue,,0000,0000,0000,,Sagara-kun...
Dialogue: 0,0:11:15.67,0:11:17.63,Dialogue,,0000,0000,0000,,Kurz!
Dialogue: 0,0:11:17.72,0:11:19.30,Dialogue,,0000,0000,0000,,Cậu tỉnh rồi à?
Dialogue: 0,0:11:20.93,0:11:23.47,Dialogue,,0000,0000,0000,,Cậu thua rồi, Sousuke.
Dialogue: 0,0:11:23.55,0:11:25.51,Dialogue,,0000,0000,0000,,Cô ấy đã nói là không muốn.
Dialogue: 0,0:11:25.60,0:11:27.52,Dialogue,,0000,0000,0000,,Kế hoạch của cậu phá sản rồi.
Dialogue: 0,0:11:27.60,0:11:29.02,Dialogue,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:11:28.30,0:11:31.02,Dialogue,,0000,0000,0000,,Tôi tán thành ý kiến của Kaname.
Dialogue: 0,0:11:31.10,0:11:33.15,Dialogue,,0000,0000,0000,,Một đám cháy là ý kiến hay.
Dialogue: 0,0:11:33.23,0:11:35.90,Dialogue,,0000,0000,0000,,Đúng lúc là trời đã hết mưa.
Dialogue: 0,0:11:35.98,0:11:39.11,Dialogue,,0000,0000,0000,,Ngớ ngẩn! Chẳng khác nào chỉ cho kẻ địch biết vị trí của ta.
Dialogue: 0,0:11:39.20,0:11:40.78,Dialogue,,0000,0000,0000,,Quá mạo hiểm!
Dialogue: 0,0:11:41.49,0:11:45.70,Dialogue,,0000,0000,0000,,Nhưng mà máy bay của quân ta có thể đang bay xung quanh đây...
Dialogue: 0,0:11:45.79,0:11:48.20,Dialogue,,0000,0000,0000,,và họ có thể tìm thấy chúng ta từ trên không.
Dialogue: 0,0:11:48.29,0:11:50.50,Dialogue,,0000,0000,0000,,Không thể nào! Đây là không phận của kẻ địch.
Dialogue: 0,0:11:50.58,0:11:52.21,Dialogue,,0000,0000,0000,,Chờ đã!
Dialogue: 0,0:11:52.29,0:11:53.71,Dialogue,,0000,0000,0000,,Từ trên không?
Dialogue: 0,0:11:53.79,0:11:55.34,Dialogue,,0000,0000,0000,,Lúc 0248 giờ...
Dialogue: 0,0:11:55.42,0:11:56.34,Dialogue,,0000,0000,0000,,Chuyện gì thế?
Dialogue: 0,0:11:56.42,0:11:59.34,Dialogue,,0000,0000,0000,,Trước khi bắt đầu chiến dịch, tớ đã thấy một tấm hình chụp từ vệ tinh.
Dialogue: 0,0:11:59.42,0:12:00.76,Dialogue,,0000,0000,0000,,Bức ảnh của căn cứ này.
Dialogue: 0,0:12:00.84,0:12:06.01,Dialogue,,0000,0000,0000,,Thời gian là, tôi nghĩ là lúc 1530 giờ ngày hôm qua.
Dialogue: 0,0:12:07.89,0:12:09.02,Dialogue,,0000,0000,0000,,Vệ tinh do thám!
Dialogue: 0,0:12:09.10,0:12:11.52,Dialogue,,0000,0000,0000,,Kaname-chan, cô thật tuyệt!
Dialogue: 0,0:12:11.60,0:12:12.64,Dialogue,,0000,0000,0000,,Vậy là sao ?
Dialogue: 0,0:12:12.73,0:12:17.73,Dialogue,,0000,0000,0000,,Cứ mỗi 12 tiếng, vệ tinh do thám sẽ đi qua cùng một vị trí trên bề mặt Trái Đất.
Dialogue: 0,0:12:17.82,0:12:21.86,Dialogue,,0000,0000,0000,,Có nghĩa là khoảng 40 phút sau, nó sẽ ở trên đầu chúng ta.
Dialogue: 0,0:12:21.95,0:12:24.74,Dialogue,,0000,0000,0000,,Tuy nhiên, với số lượng mây thế này xung quanh đây...
Dialogue: 0,0:12:24.82,0:12:28.58,Dialogue,,0000,0000,0000,,họ khó có thể tìm thấy chúng ta qua vệ tinh.
Dialogue: 0,0:12:28.66,0:12:31.66,Dialogue,,0000,0000,0000,,Đây không phải là canh bạc tốt, nhưng...
Dialogue: 0,0:12:31.75,0:12:34.33,Dialogue,,0000,0000,0000,,Rất đáng để thử, phải không?
Dialogue: 0,0:12:34.42,0:12:36.17,Dialogue,,0000,0000,0000,,Chính xác.
Dialogue: 0,0:12:36.25,0:12:37.29,Dialogue,,0000,0000,0000,,Cậu đi đâu vậy ?
Dialogue: 0,0:12:37.38,0:12:39.21,Dialogue,,0000,0000,0000,,Tôi đi lấy dầu.
Dialogue: 0,0:12:39.30,0:12:42.05,Dialogue,,0000,0000,0000,,Nhiên liệu từ hộp quẹt chỉ đủ để làm một đám cháy nhỏ.
Dialogue: 0,0:12:42.13,0:12:44.05,Dialogue,,0000,0000,0000,,Hiểu rồi. Đừng làm chuyện gì bất cẩn.
Dialogue: 0,0:12:44.14,0:12:47.05,Dialogue,,0000,0000,0000,,Mà thôi, sớm muộn gì chúng ta cũng làm những điều đó.
Dialogue: 0,0:12:47.14,0:12:50.52,Dialogue,,0000,0000,0000,,Cậu đi một mình sao?
Dialogue: 0,0:12:48.54,0:12:50.52,Dialogue,,0000,0000,0000,,{\i1}Phải, cô hãy ở lại đây.{\i0}
Dialogue: 0,0:12:50.60,0:12:52.39,Dialogue,,0000,0000,0000,,Sagara-kun!
Dialogue: 0,0:12:52.48,0:12:56.06,Dialogue,,0000,0000,0000,,Hứa với tớ là cậu nhất định sẽ trở về đấy.
Dialogue: 0,0:12:57.48,0:13:01.36,Dialogue,,0000,0000,0000,,Tôi hứa nhất định sẽ trở về.
Dialogue: 0,0:13:16.58,0:13:19.17,Dialogue,,0000,0000,0000,,Vậy là anh cũng không biết ?
Dialogue: 0,0:13:19.25,0:13:24.72,Dialogue,,0000,0000,0000,,Phải, chúng tôi chỉ nhận lệnh bảo vệ cô từ chỉ huy.
Dialogue: 0,0:13:24.80,0:13:27.30,Dialogue,,0000,0000,0000,,Chúng tôi chỉ làm theo lệnh thôi.
Dialogue: 0,0:13:27.39,0:13:32.64,Dialogue,,0000,0000,0000,,Chúng tôi không biết gì về việc tại sao cô là mục tiêu của bọn chúng.
Dialogue: 0,0:13:32.73,0:13:34.68,Dialogue,,0000,0000,0000,,Thế à.
Dialogue: 0,0:13:50.24,0:13:52.70,Dialogue,,0000,0000,0000,,Thế bọn chúng đã làm gì cô?
Dialogue: 0,0:13:52.79,0:13:54.45,Dialogue,,0000,0000,0000,,Tôi không biết.
Dialogue: 0,0:13:54.54,0:13:58.50,Dialogue,,0000,0000,0000,,Chúng bắt tôi uống thứ thuốc gì đó mà chúng bảo là vitamin.
Dialogue: 0,0:13:58.58,0:14:01.59,Dialogue,,0000,0000,0000,,Và cho tôi xem những đoạn video kỳ lạ mà tôi không tài nào hiểu được.
Dialogue: 0,0:14:01.67,0:14:02.59,Dialogue,,0000,0000,0000,,Video?
Dialogue: 0,0:14:02.67,0:14:06.17,Dialogue,,0000,0000,0000,,Những ký tự đó cứ thay đổi liên tục.
Dialogue: 0,0:14:06.26,0:14:12.26,Dialogue,,0000,0000,0000,,Nguyên liệu cơ bản của đĩa đệm chống xung và hóa chất thử dùng cho phản ứng palladium..
Dialogue: 0,0:14:12.35,0:14:16.43,Dialogue,,0000,0000,0000,,Chế độ tàng hình ESC, không hoàn toàn tàng hình...
Dialogue: 0,0:14:16.52,0:14:21.65,Dialogue,,0000,0000,0000,,Hệ thống quét dao động bằng màn hình laser bị quá tải, có mùi của khí ozone.
Dialogue: 0,0:14:22.03,0:14:24.65,Dialogue,,0000,0000,0000,,Làm sao cô biết được những điều đó?
Dialogue: 0,0:14:24.74,0:14:27.24,Dialogue,,0000,0000,0000,,Hả? Tôi có nói gì sao ?
Dialogue: 0,0:14:27.32,0:14:31.17,Dialogue,,0000,0000,0000,,Tên của các bộ phận AS và điểm yếu của hệ thống ESC...
Dialogue: 0,0:14:31.25,0:14:34.33,Dialogue,,0000,0000,0000,,chỉ những người trong quân đội mới biết.
Dialogue: 0,0:14:34.41,0:14:36.08,Dialogue,,0000,0000,0000,,Mặc dù anh nói thế...
Dialogue: 0,0:14:36.16,0:14:38.96,Dialogue,,0000,0000,0000,,Cô đã học những điều này ở đâu ?
Dialogue: 0,0:14:39.04,0:14:40.25,Dialogue,,0000,0000,0000,,Tôi không biết.
Dialogue: 0,0:14:40.33,0:14:45.38,Dialogue,,0000,0000,0000,,Tôi không biết về những điều này, nhưng bằng cách nào đó tôi lại biết.
Dialogue: 0,0:14:45.46,0:14:47.72,Dialogue,,0000,0000,0000,,Trước khi tôi được sinh ra...
Dialogue: 0,0:14:47.80,0:14:52.05,Dialogue,,0000,0000,0000,,Phải rồi, tôi nhớ bọn chúng gọi nó là "Black Technology" hay gì đó.
Dialogue: 0,0:15:02.19,0:15:03.57,Dialogue,,0000,0000,0000,,Kaname!
Dialogue: 0,0:15:16.50,0:15:18.08,Dialogue,,0000,0000,0000,,Cô không sao chứ?
Dialogue: 0,0:15:18.16,0:15:21.25,Dialogue,,0000,0000,0000,,Tôi đã làm gì thế này?
Dialogue: 0,0:15:21.33,0:15:24.71,Dialogue,,0000,0000,0000,,Tôi trông giống như một người hay thay đổi nhỉ.
Dialogue: 0,0:15:24.80,0:15:28.67,Dialogue,,0000,0000,0000,,Nghe này, Kaname. Đừng suy nghĩ về nó nữa.
Dialogue: 0,0:15:28.76,0:15:30.93,Dialogue,,0000,0000,0000,,Hãy quên điều đó đi...
Dialogue: 0,0:15:47.44,0:15:49.40,Dialogue,,0000,0000,0000,,Anh ổn chứ? Có đau lắm không?
Dialogue: 0,0:15:49.49,0:15:54.57,Dialogue,,0000,0000,0000,,Tôi không thể cử động vào thời khắc quan trọng này.
Dialogue: 0,0:15:54.66,0:15:55.78,Dialogue,,0000,0000,0000,,Thật hổ thẹn.
Dialogue: 0,0:15:55.87,0:15:58.16,Dialogue,,0000,0000,0000,,Không phải thế, anh đã làm rất tốt.
Dialogue: 0,0:15:58.25,0:16:02.21,Dialogue,,0000,0000,0000,,Tức thật, ước gì tôi còn chút sức lực sót lại.
Dialogue: 0,0:16:02.29,0:16:03.67,Dialogue,,0000,0000,0000,,Nếu như anh còn chút sức lực ?
Dialogue: 0,0:16:03.75,0:16:06.17,Dialogue,,0000,0000,0000,,Nếu tôi còn chút sức lực...
Dialogue: 0,0:16:29.40,0:16:30.61,Dialogue,,0000,0000,0000,,Thành công chứ ?
Dialogue: 0,0:16:30.69,0:16:34.49,Dialogue,,0000,0000,0000,,Tôi không biết. Hy vọng là họ nhận ra dấu hiệu của chúng ta.
Dialogue: 0,0:16:34.57,0:16:36.57,Dialogue,,0000,0000,0000,,Sự chênh lệch không là...
Dialogue: 0,0:16:36.66,0:16:39.91,Dialogue,,0000,0000,0000,,Kurz, cố lên! Cậu không sao chứ?
Dialogue: 0,0:16:40.00,0:16:45.04,Dialogue,,0000,0000,0000,,Không sao đâu. Hắn ta là loại người sống rất dai.
Dialogue: 0,0:16:48.84,0:16:50.92,Dialogue,,0000,0000,0000,,Có chuyện gì xảy ra à?
Dialogue: 0,0:16:55.47,0:16:57.72,Dialogue,,0000,0000,0000,,Nè...
Dialogue: 0,0:16:57.81,0:17:03.39,Dialogue,,0000,0000,0000,,Nếu... nếu chúng ta có thể trở về an toàn, cậu tính sẽ làm gì, Sagara-kun?
Dialogue: 0,0:17:03.48,0:17:05.90,Dialogue,,0000,0000,0000,,Tôi sẽ thực hiện nhiệm vụ tiếp theo.
Dialogue: 0,0:17:05.98,0:17:08.31,Dialogue,,0000,0000,0000,,Cậu sẽ đi nơi khác sao ?
Dialogue: 0,0:17:08.40,0:17:09.94,Dialogue,,0000,0000,0000,,Cậu sẽ không đến trường nữa à ?
Dialogue: 0,0:17:10.03,0:17:11.65,Dialogue,,0000,0000,0000,,Có lẽ thế.
Dialogue: 0,0:17:11.74,0:17:16.28,Dialogue,,0000,0000,0000,,Sẽ rất rắc rối cho nhiệm vụ khác nếu tiếp tục là học sinh trung học.
Dialogue: 0,0:17:16.37,0:17:20.83,Dialogue,,0000,0000,0000,,Tôi chỉ sẽ biến mất khỏi cuộc sống của cô.
Dialogue: 0,0:17:20.91,0:17:22.50,Dialogue,,0000,0000,0000,,Thế à.
Dialogue: 0,0:17:23.75,0:17:24.58,Dialogue,,0000,0000,0000,,Không!
Dialogue: 0,0:17:24.67,0:17:26.04,Dialogue,,0000,0000,0000,,Bọn chúng đang đến đây.
Dialogue: 0,0:17:27.17,0:17:28.88,Dialogue,,0000,0000,0000,,Chúng đã theo dấu cậu.
Dialogue: 0,0:17:28.96,0:17:31.13,Dialogue,,0000,0000,0000,,Chỉ là vấn đề thời gian.
Dialogue: 0,0:17:37.97,0:17:39.68,Dialogue,,0000,0000,0000,,Kết thúc rồi sao.
Dialogue: 0,0:17:39.76,0:17:40.85,Dialogue,,0000,0000,0000,,Chắc là thế.
Dialogue: 0,0:17:40.93,0:17:45.23,Dialogue,,0000,0000,0000,,Tớ đã từng xem một bộ phim thế này.
Dialogue: 0,0:17:45.31,0:17:54.32,Dialogue,,0000,0000,0000,,Giống như các cậu, chàng trai ủ rũ và tên dê cụ trốn chạy từ phía tây nước Mỹ đến nơi nào đó ở Nam Mỹ.
Dialogue: 0,0:17:54.40,0:17:56.78,Dialogue,,0000,0000,0000,,Đến cuối cùng, họ bị bao vây xung quanh bởi kẻ thù...
Dialogue: 0,0:17:56.86,0:17:59.49,Dialogue,,0000,0000,0000,,Tôi cũng có xem phim đó.
Dialogue: 0,0:18:00.83,0:18:06.79,Dialogue,,0000,0000,0000,,Tôi nhớ là nhân vật nữ chính dễ thương rất tốt với tên dê cụ, phải không ?
Dialogue: 0,0:18:06.87,0:18:08.50,Dialogue,,0000,0000,0000,,Chuyện gì đã xảy ra?
Dialogue: 0,0:18:08.58,0:18:12.00,Dialogue,,0000,0000,0000,,Đến cuối cùng thì chuyện gì đã xảy ra cho những người đó?
Dialogue: 0,0:18:12.09,0:18:13.34,Dialogue,,0000,0000,0000,,Tớ không biết.
Dialogue: 0,0:18:13.42,0:18:17.59,Dialogue,,0000,0000,0000,,Khi họ vừa chạy ra vừa bắn thì bộ phim kết thúc.
Dialogue: 0,0:18:17.68,0:18:18.68,Dialogue,,0000,0000,0000,,Thế à.
Dialogue: 0,0:18:18.76,0:18:23.81,Dialogue,,0000,0000,0000,,Trong các bộ phim cổ điển, nhân vật chính thường sẽ chết.
Dialogue: 0,0:18:23.89,0:18:25.81,Dialogue,,0000,0000,0000,,Cậu có nghĩ rằng điều đó trái với quy luật ?
Dialogue: 0,0:18:25.89,0:18:28.69,Dialogue,,0000,0000,0000,,Tớ nghĩ là  các bộ phim nên có kết thúc tươi đẹp.
Dialogue: 0,0:18:38.03,0:18:41.20,Dialogue,,0000,0000,0000,,Hiểu rồi...đây là sự thật phải không ?
Dialogue: 0,0:18:41.28,0:18:45.50,Dialogue,,0000,0000,0000,,Sao chúng ta không làm một kết thúc thật là ngầu ?
Dialogue: 0,0:18:45.58,0:18:48.66,Dialogue,,0000,0000,0000,,Đúng vậy! Làm cho cảnh này thật cảm động nào.
Dialogue: 0,0:18:48.75,0:18:50.12,Dialogue,,0000,0000,0000,,Chidori...
Dialogue: 0,0:18:50.21,0:18:54.96,Dialogue,,0000,0000,0000,,Xin lỗi, chúng ta không thể cùng nhau trở về được.
Dialogue: 0,0:18:55.05,0:18:57.38,Dialogue,,0000,0000,0000,,Tớ không hề hối hận.
Dialogue: 0,0:18:57.47,0:19:00.64,Dialogue,,0000,0000,0000,,Tớ rất vui vì đã gặp cậu, Sagara-kun.
Dialogue: 0,0:19:02.05,0:19:04.01,Dialogue,,0000,0000,0000,,Vậy thì, chúng ta lên chứ ?
Dialogue: 0,0:19:05.14,0:19:06.22,Dialogue,,0000,0000,0000,,Khoan đã!
Dialogue: 0,0:19:22.66,0:19:24.24,Dialogue,,0000,0000,0000,,Đó là... \NMột M9?
Dialogue: 0,0:19:24.33,0:19:25.87,Dialogue,,0000,0000,0000,,Không, không phải!
Dialogue: 0,0:19:25.95,0:19:27.12,Dialogue,,0000,0000,0000,,Sagara-kun!
Dialogue: 0,0:19:30.79,0:19:33.71,Dialogue,,0000,0000,0000,,Ai ở trong đó thế? Là Mao à?
Dialogue: 0,0:19:33.79,0:19:37.92,Dialogue,,0000,0000,0000,,{\i1}Bắt đầu kiểm tra giọng nói. Hãy báo tên và số ID.{\i0}
Dialogue: 0,0:19:38.01,0:19:41.34,Dialogue,,0000,0000,0000,,Trung sĩ Sagara Sousuke, B-31 28.
Dialogue: 0,0:19:41.43,0:19:45.30,Dialogue,,0000,0000,0000,,{\i1}Kiểm tra hoàn tất. Xác nhận trung sĩ Sagara.{\i0}
Dialogue: 0,0:19:45.39,0:19:46.43,Dialogue,,0000,0000,0000,,{\i1}Hãy ra lệnh.{\i0}
Dialogue: 0,0:19:46.52,0:19:51.27,Dialogue,,0000,0000,0000,,Đóng cửa sập. Mở chế độ kiểm soát 4. Góc song phương 3.5.
Dialogue: 0,0:19:51.35,0:19:52.31,Dialogue,,0000,0000,0000,,{\i1}Rõ.{\i0}
Dialogue: 0,0:19:53.02,0:19:55.00,Dialogue,,0000,0000,0000,,Trung sĩ Sagara,
Dialogue: 0,0:19:55.40,0:20:01.36,Dialogue,,0000,0000,0000,,hệ thống này cho phép cậu giao tiếp với ARX-7, Arbalest.
Dialogue: 0,0:20:01.45,0:20:02.91,Dialogue,,0000,0000,0000,,Arbalest?
Dialogue: 0,0:20:02.99,0:20:07.91,Dialogue,,0000,0000,0000,,Ngay lúc này, tàu "de Danaan" đang tiến gần bờ biển một cách nhanh chóng.
Dialogue: 0,0:20:08.00,0:20:12.79,Dialogue,,0000,0000,0000,,Chúng tôi dự tính sẽ đi dọc theo bờ biển và rời khỏi đây sau khi đón các cậu.
Dialogue: 0,0:20:12.88,0:20:16.54,Dialogue,,0000,0000,0000,,Chúng tôi sẽ trồi lên mặt nước trong vòng 1 phút bắt đầu từ lúc 0430 giờ.
Dialogue: 0,0:20:16.63,0:20:20.42,Dialogue,,0000,0000,0000,,Hãy đến địa điểm chỉ định đúng giờ.
Dialogue: 0,0:20:20.51,0:20:23.13,Dialogue,,0000,0000,0000,,Ký hiệu của AI ( trí thông minh nhân tạo ) là Al.
Dialogue: 0,0:20:23.22,0:20:26.05,Dialogue,,0000,0000,0000,,Cậu phải đưa cỗ máy thử nghiệm đắt tiền đó trở về bằng mọi giá.
Dialogue: 0,0:20:26.14,0:20:28.01,Dialogue,,0000,0000,0000,,Chúc may mắn.
Dialogue: 0,0:20:28.10,0:20:31.89,Dialogue,,0000,0000,0000,,{\i1}AS của kẻ địch đang đến, ước tính là 5 chiếc.{\i0}
Dialogue: 0,0:20:31.98,0:20:34.10,Dialogue,,0000,0000,0000,,Bọn chúng đang đến.
Dialogue: 0,0:20:34.19,0:20:35.40,Dialogue,,0000,0000,0000,,Sousuke...
Dialogue: 0,0:20:36.57,0:20:38.52,Dialogue,,0000,0000,0000,,Cậu là Al phải không?
Dialogue: 0,0:20:38.61,0:20:40.90,Dialogue,,0000,0000,0000,,{\i1}Yes, sir.{\i0}
Dialogue: 0,0:20:40.99,0:20:42.78,Dialogue,,0000,0000,0000,,Chúng ta sẽ dứt điểm bọn chúng trong 1 phút.
Dialogue: 0,0:20:42.86,0:20:43.91,Dialogue,,0000,0000,0000,,{\i1}Rõ.{\i0}
Dialogue: 0,0:21:13.23,0:21:24.82,Songs (Romanji),,0000,0000,0000,,Kokoro ni chiisana hana ga saiteru
Dialogue: 0,0:21:24.91,0:21:36.08,Songs (Romanji),,0000,0000,0000,,Kimi kara moratta karenai hana ga
Dialogue: 0,0:21:36.17,0:21:42.00,Songs (Romanji),,0000,0000,0000,,Shinjiru koto mo kowagaranai kurai
Dialogue: 0,0:21:42.09,0:21:49.35,Songs (Romanji),,0000,0000,0000,,Tsuyoku nareta kara
Dialogue: 0,0:21:49.43,0:21:55.18,Songs (Romanji),,0000,0000,0000,,Kimi ni aete ureshikatta
Dialogue: 0,0:21:55.27,0:22:01.65,Songs (Romanji),,0000,0000,0000,,Tsunaida te ga hokoridatta
Dialogue: 0,0:22:01.73,0:22:08.45,Songs (Romanji),,0000,0000,0000,,Ima wa betsubetsu no sora miagete itemo
Dialogue: 0,0:22:08.53,0:22:16.91,Songs (Romanji),,0000,0000,0000,,Hora arukeru hitori demo
Dialogue: 0,0:21:13.23,0:21:24.82,Songs,,0000,0000,0000,,Bông hoa nhỏ trong tim em
Dialogue: 0,0:21:24.91,0:21:36.08,Songs,,0000,0000,0000,,Bông hoa không bao giờ tàn mà anh đã tặng em
Dialogue: 0,0:21:36.17,0:21:42.00,Songs,,0000,0000,0000,,Em không hề sợ hãi, thậm chí luôn tin tưởng
Dialogue: 0,0:21:42.09,0:21:49.35,Songs,,0000,0000,0000,,Đó là điều khiến em trở nên mạnh mẽ
Dialogue: 0,0:21:49.43,0:21:55.18,Songs,,0000,0000,0000,,Em rất hạnh phúc vì đã gặp anh
Dialogue: 0,0:21:55.27,0:22:01.65,Songs,,0000,0000,0000,,Em tự hào khi nắm tay anh
Dialogue: 0,0:22:01.73,0:22:08.45,Songs,,0000,0000,0000,,Dù cho hai ta hướng về bầu trời khác nhau
Dialogue: 0,0:22:08.53,0:22:16.91,Songs,,0000,0000,0000,,Anh thấy không, em có thể tự mình bước đi
Dialogue: 0,0:22:25.55,0:22:30.23,Dialogue,,0000,0000,0000,,"Bộ phim này hoàn toàn là hư cấu.\N Tên nhân vật và các tổ chức trong phim không liên quan đến bất cứ cá nhân / tổ chức nào."
Dialogue: 0,0:22:31.35,0:22:34.89,Dialogue,,0000,0000,0000,,Có gì đó đang thức tỉnh bên trong tớ. Nó là cái gì ?
Dialogue: 0,0:22:34.98,0:22:38.64,Dialogue,,0000,0000,0000,,Một phần bên trong tớ mà tớ không biết... Đó là sức mạnh của Whispered?
Dialogue: 0,0:22:38.73,0:22:42.82,Dialogue,,0000,0000,0000,,Full Metal Panic: Tập 7, "Boy Meets Girl."
Dialogue: 0,0:22:42.90,0:22:44.86,Dialogue,,0000,0000,0000,,Coi nào, Sousuke!
Dialogue: 0,0:22:44.94,0:22:46.32,Dialogue,,0000,0000,0000,,Đau quá.
