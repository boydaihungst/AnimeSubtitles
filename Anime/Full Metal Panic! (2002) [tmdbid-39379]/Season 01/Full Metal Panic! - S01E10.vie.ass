Dialogue: 0,0:00:16.60,0:00:23.89,Songs (Romanji),,0000,0000,0000,,Futari de nigebasho sagashite
Dialogue: 0,0:00:23.98,0:00:31.40,Songs (Romanji),,0000,0000,0000,,Hashitta tenki ame no naka
Dialogue: 0,0:00:31.49,0:00:38.83,Songs (Romanji),,0000,0000,0000,,Tatoeba nanika wo ushinau toshite mo
Dialogue: 0,0:00:38.91,0:00:47.67,Songs (Romanji),,0000,0000,0000,,Mamotte ikanakya hitotsu dake wa
Dialogue: 0,0:00:47.75,0:00:54.97,Songs (Romanji),,0000,0000,0000,,Kono sekai ni umareta sono imi wo
Dialogue: 0,0:00:55.05,0:01:00.47,Songs (Romanji),,0000,0000,0000,,Kimi to mitsuke ni yukou
Dialogue: 0,0:01:00.56,0:01:05.64,Songs (Romanji),,0000,0000,0000,,Itami sae mo kakaenagara
Dialogue: 0,0:01:05.73,0:01:12.53,Songs (Romanji),,0000,0000,0000,,Atarashii keshiki mukae ni yukou
Dialogue: 0,0:00:16.60,0:00:23.89,Songs,,0000,0000,0000,,Hai chúng ta đang tìm một nơi để trốn thoát
Dialogue: 0,0:00:23.98,0:00:31.40,Songs,,0000,0000,0000,,Cùng chạy dưới ánh nắng chói chang
Dialogue: 0,0:00:31.49,0:00:38.83,Songs,,0000,0000,0000,,Ngay cả khi em mất một điều gì khác
Dialogue: 0,0:00:38.91,0:00:47.67,Songs,,0000,0000,0000,,Thì em chỉ muốn giữ lấy một điều duy nhất
Dialogue: 0,0:00:47.75,0:00:54.97,Songs,,0000,0000,0000,,Ý nghĩa khi được sinh ra ở thế giới này
Dialogue: 0,0:00:55.05,0:01:00.47,Songs,,0000,0000,0000,,Hãy đi cùng em và tìm hiểu
Dialogue: 0,0:01:00.56,0:01:05.64,Songs,,0000,0000,0000,,Giữ chặt lấy nó, dù cho là nỗi đau
Dialogue: 0,0:01:05.73,0:01:12.53,Songs,,0000,0000,0000,,Cùng tiến lên đón chào thế giới mới
Dialogue: 0,0:01:15.53,0:01:19.88,Dialogue,,0000,0000,0000,,Translator: MaHiME
Dialogue: 0,0:01:23.88,0:01:29.88,Dialogue,,0000,0000,0000,,Waya fansub presents
Dialogue: 0,0:01:38.60,0:01:40.85,Dialogue,,0000,0000,0000,,Sousuke là...
Dialogue: 0,0:01:40.93,0:01:43.27,Dialogue,,0000,0000,0000,,...tên đại ngốc!
Dialogue: 0,0:02:02.99,0:02:04.16,Dialogue,,0000,0000,0000,,Thuyền trưởng!
Dialogue: 0,0:02:12.34,0:02:14.38,Dialogue,,0000,0000,0000,,Sagara-san?
Dialogue: 0,0:02:14.46,0:02:16.17,Dialogue,,0000,0000,0000,,Thật may quá.
Dialogue: 0,0:02:20.85,0:02:22.55,Dialogue,,0000,0000,0000,,"Chạy, chạy đi."
Dialogue: 0,0:02:28.56,0:02:31.31,Dialogue,,0000,0000,0000,,Chào buổi tối.
Dialogue: 0,0:02:31.40,0:02:32.94,Dialogue,,0000,0000,0000,,Chào buổi tối...
Dialogue: 0,0:02:33.02,0:02:35.86,Dialogue,,0000,0000,0000,,Đây, hai người hãy ăn chung với nhau nhé.
Dialogue: 0,0:02:35.94,0:02:36.74,Dialogue,,0000,0000,0000,,Chidori...
Dialogue: 0,0:02:36.78,0:02:39.82,Dialogue,,0000,0000,0000,,Cô bạn gái dễ thương quá nhỉ. Xin lỗi vì đã làm phiền cậu.
Dialogue: 0,0:02:39.91,0:02:42.45,Dialogue,,0000,0000,0000,,Chidori, cô đang hiểu lầm.
Dialogue: 0,0:02:42.53,0:02:45.49,Dialogue,,0000,0000,0000,,Xin lỗi vì tớ đã xen vào chuyện này.
Dialogue: 0,0:02:45.58,0:02:47.62,Dialogue,,0000,0000,0000,,Chắc là tớ đã làm phiền cậu trong thời gian qua.
Dialogue: 0,0:02:47.71,0:02:50.04,Dialogue,,0000,0000,0000,,Không, Chidori, không phải thế.
Dialogue: 0,0:02:50.12,0:02:52.88,Dialogue,,0000,0000,0000,,Được rồi. Cậu không cần cố gắng giải thích.
Dialogue: 0,0:02:52.96,0:02:56.34,Dialogue,,0000,0000,0000,,Tớ không giận gì cả, chỉ thấy có lỗi một chút thôi.
Dialogue: 0,0:02:56.42,0:02:57.21,Dialogue,,0000,0000,0000,,Chidori!
Dialogue: 0,0:02:57.26,0:03:00.43,Dialogue,,0000,0000,0000,,Cậu là Chidori Kaname phải không?
Dialogue: 0,0:03:05.85,0:03:10.23,Dialogue,,0000,0000,0000,,Vậy, cậu nói là tổ chức khủng bố A21 đang đuổi theo cậu ?
Dialogue: 0,0:03:10.31,0:03:14.31,Dialogue,,0000,0000,0000,,Và chúng đang cố gắng để giải cứu chàng trai tên Takuma.
Dialogue: 0,0:03:14.40,0:03:15.65,Dialogue,,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:03:15.73,0:03:20.74,Dialogue,,0000,0000,0000,,Và cô gái kia là chỉ huy của cậu, là thuyền trưởng phải không ?
Dialogue: 0,0:03:20.82,0:03:22.11,Dialogue,,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:03:22.20,0:03:24.83,Dialogue,,0000,0000,0000,,À, Testarossa-san?
Dialogue: 0,0:03:24.91,0:03:29.04,Dialogue,,0000,0000,0000,,Tớ là Teletha Testarossa. Bạn bè gọi tớ là Tessa.
Dialogue: 0,0:03:29.12,0:03:30.33,Dialogue,,0000,0000,0000,,Cậu bao nhiêu tuổi?
Dialogue: 0,0:03:30.42,0:03:32.53,Dialogue,,0000,0000,0000,,16.
Dialogue: 0,0:03:33.21,0:03:36.92,Dialogue,,0000,0000,0000,,Này nhé, tớ đã từng xem những bộ phim loại này...
Dialogue: 0,0:03:37.01,0:03:41.17,Dialogue,,0000,0000,0000,,Những người được gọi là thuyền trưởng là những gã đàn ông trung niên với bộ ria mép hoặc râu.
Dialogue: 0,0:03:41.26,0:03:46.10,Dialogue,,0000,0000,0000,,Những cô gái trẻ như thế này luôn được biết đến như là cô thư ký chuyên đọc điện tín.
Dialogue: 0,0:03:46.18,0:03:48.52,Dialogue,,0000,0000,0000,,Nhưng đó là sự thật.
Dialogue: 0,0:03:48.60,0:03:53.19,Dialogue,,0000,0000,0000,,Tớ không quan tâm quan hệ giữa cậu và cô ấy là gì...
Dialogue: 0,0:03:53.27,0:03:56.98,Dialogue,,0000,0000,0000,,nhưng cậu không nghĩ rằng mình nên trung thực ư?
Dialogue: 0,0:03:57.07,0:04:00.07,Dialogue,,0000,0000,0000,,Không lẽ cậu thường xuyên nói dối như thế này sao?
Dialogue: 0,0:04:00.15,0:04:02.15,Dialogue,,0000,0000,0000,,Thuyền trưởng...
Dialogue: 0,0:04:02.24,0:04:04.20,Dialogue,,0000,0000,0000,,Thuyền trưởng?
Dialogue: 0,0:04:04.28,0:04:07.33,Dialogue,,0000,0000,0000,,Cậu đang nói về tớ à ? Có gì không ?
Dialogue: 0,0:04:07.41,0:04:12.25,Dialogue,,0000,0000,0000,,Tôi rất cảm kích nếu cô có thể giải thích cho cô ấy.
Dialogue: 0,0:04:12.33,0:04:17.25,Dialogue,,0000,0000,0000,,Tớ là thuyền trưởng của... gì ấy nhỉ? Để tớ xem nào...
Dialogue: 0,0:04:17.34,0:04:22.88,Dialogue,,0000,0000,0000,,Tàu ngầm chiến đấu phải không? Thuyền trưởng và cũng là chỉ huy của Sousuke nhỉ.
Dialogue: 0,0:04:22.97,0:04:26.30,Dialogue,,0000,0000,0000,,Vâng, đó là sự thật, Chidori Kaname-san.
Dialogue: 0,0:04:26.39,0:04:27.60,Dialogue,,0000,0000,0000,,Thuyền trưởng...
Dialogue: 0,0:04:27.68,0:04:31.06,Dialogue,,0000,0000,0000,,Tớ thiếu gì sao, trung sĩ Sagara ?
Dialogue: 0,0:04:39.40,0:04:41.32,Dialogue,,0000,0000,0000,,Ông đã tỉnh rồi à.
Dialogue: 0,0:04:41.40,0:04:43.07,Dialogue,,0000,0000,0000,,Cô muốn gì?
Dialogue: 0,0:04:43.15,0:04:45.86,Dialogue,,0000,0000,0000,,Tôi muốn nói chuyện với ông.
Dialogue: 0,0:04:45.95,0:04:49.20,Dialogue,,0000,0000,0000,,Cô nghĩ rằng có thể lấy được thông tin gì từ tôi sao ?
Dialogue: 0,0:04:49.29,0:04:52.33,Dialogue,,0000,0000,0000,,Tôi cũng không mong gì nhiều. Ông bị thương khá nặng đấy.
Dialogue: 0,0:04:52.41,0:04:55.29,Dialogue,,0000,0000,0000,,Kể cả nếu chúng tôi tra khảo ông, ông cũng sẽ chết trước khi kịp nói gì.
Dialogue: 0,0:04:55.38,0:04:57.92,Dialogue,,0000,0000,0000,,Thế thì tại sao lại cứu tôi ?
Dialogue: 0,0:04:58.00,0:05:01.46,Dialogue,,0000,0000,0000,,Nói rồi. Tôi chỉ muốn nói chuyện với ông thôi.
Dialogue: 0,0:05:01.55,0:05:06.05,Dialogue,,0000,0000,0000,,Ngoài ra, ông là gì cũng không quan trọng.
Dialogue: 0,0:05:06.14,0:05:08.64,Dialogue,,0000,0000,0000,,Cô nói thế là có ý gì ?
Dialogue: 0,0:05:08.72,0:05:13.43,Dialogue,,0000,0000,0000,,Tổ chức của ông có vẻ như không có quan hệ mật thiết với các cơ quan của quốc gia này.
Dialogue: 0,0:05:13.52,0:05:17.56,Dialogue,,0000,0000,0000,,Một tổ chức mà không có sự hậu thuẫn nào thì nó không phải là mối đe dọa cho chúng tôi...
Dialogue: 0,0:05:17.65,0:05:19.90,Dialogue,,0000,0000,0000,,kể cả khi mỗi cá nhân có năng lực tốt.
Dialogue: 0,0:05:19.98,0:05:23.11,Dialogue,,0000,0000,0000,,Cô có vẻ như là một thủ lĩnh có tài.
Dialogue: 0,0:05:23.19,0:05:28.12,Dialogue,,0000,0000,0000,,Cũng không hẳn. Tôi có biết một thủ lĩnh còn tài giỏi hơn nhiều.
Dialogue: 0,0:05:28.20,0:05:32.24,Dialogue,,0000,0000,0000,,Hiểu rồi. Tớ là một người rất kiên nhẫn.
Dialogue: 0,0:05:32.33,0:05:36.37,Dialogue,,0000,0000,0000,,Nếu cậu đã cố nói thế, tớ sẽ coi như nó là thế.
Dialogue: 0,0:05:37.58,0:05:40.75,Dialogue,,0000,0000,0000,,Này cậu kia! Nãy giờ cậu cứ cười kiểu như thế.
Dialogue: 0,0:05:40.84,0:05:43.17,Dialogue,,0000,0000,0000,,Nó làm tôi thật sự khó chịu đấy.
Dialogue: 0,0:05:43.26,0:05:46.13,Dialogue,,0000,0000,0000,,Xin lỗi nhé, Chidori Kaname-san.
Dialogue: 0,0:05:46.22,0:05:49.89,Dialogue,,0000,0000,0000,,Cậu chẳng dễ thương tý nào cả! Ước gì tôi có thể thấy gương mặt của gia đình cậu.
Dialogue: 0,0:05:49.97,0:05:53.10,Dialogue,,0000,0000,0000,,Tôi có thể tưởng tượng họ nuông chiều cậu nhiều như thế nào.
Dialogue: 0,0:05:53.18,0:05:54.47,Dialogue,,0000,0000,0000,,Giận rồi à?
Dialogue: 0,0:05:54.56,0:05:58.06,Dialogue,,0000,0000,0000,,Cậu sẽ nói " Đừng nói xấu mẹ tôi!" chứ gì ?
Dialogue: 0,0:05:58.15,0:06:00.48,Dialogue,,0000,0000,0000,,Tôi không có mẹ.
Dialogue: 0,0:06:03.61,0:06:07.15,Dialogue,,0000,0000,0000,,Trùng hợp nhỉ! Cũng giống như tôi và Sousuke.
Dialogue: 0,0:06:07.24,0:06:12.12,Dialogue,,0000,0000,0000,,Cậu đã nghĩ rằng cậu là người duy nhất trên thế giới?
Dialogue: 0,0:06:12.20,0:06:16.16,Dialogue,,0000,0000,0000,,Nó có thể không xa với sự thật, kể cả nếu như nó không phải là thật.
Dialogue: 0,0:06:16.25,0:06:20.04,Dialogue,,0000,0000,0000,,Chẳng trách cậu trông có vẻ rất được nuông chiều.
Dialogue: 0,0:06:24.26,0:06:26.05,Dialogue,,0000,0000,0000,,Cậu ta là cái gì vậy?
Dialogue: 0,0:06:28.84,0:06:29.80,Dialogue,,0000,0000,0000,,Thuyền trưởng!
Dialogue: 0,0:06:29.89,0:06:31.72,Dialogue,,0000,0000,0000,,Chuyện gì thế?
Dialogue: 0,0:06:31.80,0:06:33.39,Dialogue,,0000,0000,0000,,Hãy nhìn cái này.
Dialogue: 0,0:06:36.18,0:06:37.43,Dialogue,,0000,0000,0000,,Đây là máy phát tín hiệu.
Dialogue: 0,0:06:37.52,0:06:38.89,Dialogue,,0000,0000,0000,,Máy phát tín hiệu?
Dialogue: 0,0:06:38.98,0:06:43.98,Dialogue,,0000,0000,0000,,Đây là loại máy phát tín hiệu sẽ truyền tín hiệu đi mỗi vài phút để cho họ biết cậu ta đang ở đâu.
Dialogue: 0,0:06:48.49,0:06:50.66,Dialogue,,0000,0000,0000,,Hãy tránh xa cửa chính và cửa sổ !
Dialogue: 0,0:06:54.87,0:06:57.29,Dialogue,,0000,0000,0000,,Thuyền trưởng, cô có thể lấy nó ra không?
Dialogue: 0,0:06:57.37,0:06:59.92,Dialogue,,0000,0000,0000,,Tôi có dao và chất gây mê.
Dialogue: 0,0:07:00.00,0:07:05.63,Dialogue,,0000,0000,0000,,Chúng ta không còn cách nào khác, nhưng mà tớ không biết cách phẫu thuật.
Dialogue: 0,0:07:05.71,0:07:07.17,Dialogue,,0000,0000,0000,,Vậy tôi sẽ làm.
Dialogue: 0,0:07:09.34,0:07:13.80,Dialogue,,0000,0000,0000,,Tớ không hiểu lắm, nhưng cậu chỉ cần phá cái máy phát tín hiệu thôi phải không?
Dialogue: 0,0:07:13.89,0:07:16.01,Dialogue,,0000,0000,0000,,Lùi lại đi! Hiện tại tôi đang bận.
Dialogue: 0,0:07:16.10,0:07:17.81,Dialogue,,0000,0000,0000,,Sao cậu không sử dụng nó?
Dialogue: 0,0:07:26.28,0:07:28.32,Dialogue,,0000,0000,0000,,Nó chỉ mất vài giây à.
Dialogue: 0,0:07:28.40,0:07:32.16,Dialogue,,0000,0000,0000,,Okay! Chúng ta sẽ thử với 5 giây nhé?
Dialogue: 0,0:07:33.57,0:07:34.74,Dialogue,,0000,0000,0000,,Bắt đầu!
Dialogue: 0,0:07:41.00,0:07:43.83,Dialogue,,0000,0000,0000,,Độ chính xác của nó sẽ bị hủy bởi cái này.
Dialogue: 0,0:07:43.92,0:07:47.34,Dialogue,,0000,0000,0000,,Tớ chưa hề nghe nói về cách làm liều lĩnh này.
Dialogue: 0,0:07:47.42,0:07:48.67,Dialogue,,0000,0000,0000,,Nhưng nó có ích, phải không?
Dialogue: 0,0:07:48.76,0:07:50.51,Dialogue,,0000,0000,0000,,Còn quá sớm để thư giãn.
Dialogue: 0,0:07:50.59,0:07:54.88,Dialogue,,0000,0000,0000,,Ngay khi chúng phát hiện máy phát tín hiệu không còn hoạt động, chúng sẽ bắt đầu tấn công chúng ta.
Dialogue: 0,0:07:54.97,0:07:56.64,Dialogue,,0000,0000,0000,,Chúng ta cần phải rời khỏi đây.
Dialogue: 0,0:07:56.72,0:08:01.39,Dialogue,,0000,0000,0000,,Nhưng nếu chúng biết căn phòng này thì chúng sẽ canh chừng lối ra vào.
Dialogue: 0,0:08:01.48,0:08:06.06,Dialogue,,0000,0000,0000,,Rồi, rồi. Nếu vậy thì sao hai cậu không cùng đi với nhau đến một nơi nào đó?
Dialogue: 0,0:08:06.15,0:08:07.32,Dialogue,,0000,0000,0000,,Tớ sẽ trở về nhà.
Dialogue: 0,0:08:07.40,0:08:09.57,Dialogue,,0000,0000,0000,,Không nên! Kẻ thù cũng sẽ tấn công cô.
Dialogue: 0,0:08:09.65,0:08:12.20,Dialogue,,0000,0000,0000,,Tại sao? Tớ đâu có liên quan đến chuyện này.
Dialogue: 0,0:08:12.28,0:08:16.07,Dialogue,,0000,0000,0000,,Đó là sự thật. Tôi xin lỗi vì đã kéo cô vào việc này.
Dialogue: 0,0:08:16.16,0:08:20.16,Dialogue,,0000,0000,0000,,Để tớ yên! Sao cậu không đi mà bảo vệ bạn gái mình!
Dialogue: 0,0:08:20.25,0:08:21.71,Dialogue,,0000,0000,0000,,Chidori-san...
Dialogue: 0,0:08:21.79,0:08:23.79,Dialogue,,0000,0000,0000,,Câu chuyện của cậu ấy là sự thật.
Dialogue: 0,0:08:23.88,0:08:25.25,Dialogue,,0000,0000,0000,,Nhưng vừa nãy...
Dialogue: 0,0:08:25.33,0:08:27.25,Dialogue,,0000,0000,0000,,Bởi vì nó rất vui.
Dialogue: 0,0:08:27.34,0:08:31.13,Dialogue,,0000,0000,0000,,Nó có thể khó tin nhưng tớ thật sự là chỉ huy của cậu ấy.
Dialogue: 0,0:08:31.22,0:08:34.97,Dialogue,,0000,0000,0000,,Xin hãy đi với chúng tớ.
Dialogue: 0,0:08:35.05,0:08:39.10,Dialogue,,0000,0000,0000,,Được rồi, tớ chỉ cần đi thôi phải không? chỉ cần đi...
Dialogue: 0,0:08:45.02,0:08:47.81,Dialogue,,0000,0000,0000,,Đây là trường của cậu à?
Dialogue: 0,0:08:47.86,0:08:52.40,Signs,,0000,0000,0000,,"Hội học sinh."
Dialogue: 0,0:08:48.19,0:08:50.53,Dialogue,,0000,0000,0000,,Tôi nghĩ đây là nơi tốt nhất cho chúng ta...
Dialogue: 0,0:08:50.61,0:08:52.90,Dialogue,,0000,0000,0000,,nó sẽ giảm khả năng liên lụy đến người khác và cũng gần nhà an toàn.
Dialogue: 0,0:08:52.99,0:08:55.61,Dialogue,,0000,0000,0000,,Vậy thì chúng ta sẽ phải chờ trong bao lâu?
Dialogue: 0,0:08:55.70,0:08:58.83,Dialogue,,0000,0000,0000,,Tôi đã liên lạc với bộ chỉ huy thông qua vệ tinh.
Dialogue: 0,0:08:58.91,0:09:03.29,Dialogue,,0000,0000,0000,,Mao sẽ đến đây trong vòng 2 giờ.
Dialogue: 0,0:09:03.37,0:09:06.25,Dialogue,,0000,0000,0000,,Đồng bọn của ta sẽ đến trước lúc đó.
Dialogue: 0,0:09:06.33,0:09:08.63,Dialogue,,0000,0000,0000,,Sẽ không còn chỗ nào cho các người trốn nữa đâu.
Dialogue: 0,0:09:08.71,0:09:11.42,Dialogue,,0000,0000,0000,,Tôi đã phá máy phát tín hiệu của cậu...
Dialogue: 0,0:09:11.51,0:09:13.38,Dialogue,,0000,0000,0000,,...với một lò vi sóng.
Dialogue: 0,0:09:15.30,0:09:16.47,Dialogue,,0000,0000,0000,,Vậy thì...
Dialogue: 0,0:09:16.55,0:09:18.05,Dialogue,,0000,0000,0000,,Cô tính gọi cho ai vậy?
Dialogue: 0,0:09:18.14,0:09:20.93,Dialogue,,0000,0000,0000,,Tớ cần gọi cho Kyoko để thu lại vở kịch trên TV.
Dialogue: 0,0:09:21.02,0:09:22.81,Dialogue,,0000,0000,0000,,Tuần này tớ không thể bỏ lỡ được...
Dialogue: 0,0:09:22.89,0:09:25.69,Dialogue,,0000,0000,0000,,vì chúng tớ sẽ biết nữ chính có thể hồi phục từ căn bệnh hay không.
Dialogue: 0,0:09:25.77,0:09:28.36,Dialogue,,0000,0000,0000,,Đừng nói với cô ấy là cô đang ở đâu.
Dialogue: 0,0:09:28.44,0:09:30.98,Dialogue,,0000,0000,0000,,Tớ sẽ không quan tâm xem TV ở phòng này...
Dialogue: 0,0:09:31.07,0:09:35.20,Dialogue,,0000,0000,0000,,nhưng nếu làm thế, ai đó bên ngoài có thể để ý chúng ta.
Dialogue: 0,0:09:35.28,0:09:37.45,Dialogue,,0000,0000,0000,,Tớ đang để ý đến rắc rối của cậu!
Dialogue: 0,0:09:37.53,0:09:41.28,Dialogue,,0000,0000,0000,,Tớ không liên quan gì đến việc này những đã phải miễn cưỡng tham gia.
Dialogue: 0,0:09:41.37,0:09:44.87,Dialogue,,0000,0000,0000,,Trong tình huống khẩn cấp, cậu luôn nghĩ rằng cậu là người có quyền.
Dialogue: 0,0:09:44.96,0:09:47.29,Dialogue,,0000,0000,0000,,Đó là tật xấu nhất của cậu.
Dialogue: 0,0:09:47.38,0:09:48.79,Dialogue,,0000,0000,0000,,Cậu nên sửa nó đi.
Dialogue: 0,0:09:49.63,0:09:54.97,Dialogue,,0000,0000,0000,,À, Kyoko? Là tớ đây. Tớ có thể nhờ cậu một việc không?
Dialogue: 0,0:09:55.05,0:09:59.01,Dialogue,,0000,0000,0000,,Sagara-san, cậu luôn nói chuyện thế này à ?
Dialogue: 0,0:09:59.10,0:10:02.31,Dialogue,,0000,0000,0000,,Không hẳn là lúc nào cũng thế...
Dialogue: 0,0:10:02.39,0:10:07.44,Dialogue,,0000,0000,0000,,Tớ đã nghĩ hai cậu khá thân vì cô ấy đem thức ăn đến cho cậu.
Dialogue: 0,0:10:07.52,0:10:09.65,Dialogue,,0000,0000,0000,,Mối quan hệ của chúng tôi không phải như thế.
Dialogue: 0,0:10:09.73,0:10:13.40,Dialogue,,0000,0000,0000,,Trên thực tế, tôi đang đấu tranh để tạo mối quan hệ tin tưởng lẫn nhau.
Dialogue: 0,0:10:13.48,0:10:15.40,Dialogue,,0000,0000,0000,,Thế à.
Dialogue: 0,0:10:15.49,0:10:17.53,Dialogue,,0000,0000,0000,,Thật may quá.
Dialogue: 0,0:10:17.61,0:10:20.16,Dialogue,,0000,0000,0000,,Cô có vẻ như thoải mái quá nhỉ.
Dialogue: 0,0:10:20.24,0:10:24.24,Dialogue,,0000,0000,0000,,Đồng bọn của tôi sẽ không bỏ cuộc chỉ vì máy phát tín hiệu bị hủy đâu.
Dialogue: 0,0:10:24.33,0:10:30.21,Dialogue,,0000,0000,0000,,Khi nào cô còn giữ tôi, họ sẽ đuổi theo cô.
Dialogue: 0,0:10:30.29,0:10:32.46,Dialogue,,0000,0000,0000,,Có một cách để giải quyết vấn đề này.
Dialogue: 0,0:10:32.55,0:10:33.88,Dialogue,,0000,0000,0000,,Cậu sẽ giết tôi à?
Dialogue: 0,0:10:33.96,0:10:35.46,Dialogue,,0000,0000,0000,,Nếu như cần thiết.
Dialogue: 0,0:10:35.55,0:10:37.30,Dialogue,,0000,0000,0000,,Không được, Sagara-san!
Dialogue: 0,0:10:37.38,0:10:39.59,Dialogue,,0000,0000,0000,,Đó là cách giải quyết hợp lý nhất.
Dialogue: 0,0:10:39.68,0:10:45.89,Dialogue,,0000,0000,0000,,Đúng vậy. Nhưng mà nếu làm thế, chúng ta chẳng khác gì bọn chúng.
Dialogue: 0,0:10:45.98,0:10:51.19,Dialogue,,0000,0000,0000,,Nó sẽ là sự nhạo báng đối với lý do chúng ta thành lập tổ chức này.
Dialogue: 0,0:10:51.27,0:10:54.77,Dialogue,,0000,0000,0000,,Sagara-san, trông tớ có ngớ ngẩn thế không ?
Dialogue: 0,0:10:54.86,0:10:57.03,Dialogue,,0000,0000,0000,,Không.
Dialogue: 0,0:10:57.11,0:11:00.07,Dialogue,,0000,0000,0000,,Ngươi phải cám ơn cô ấy.
Dialogue: 0,0:11:00.16,0:11:03.37,Dialogue,,0000,0000,0000,,Cô nghĩ rằng tôi sẽ biết ơn cô vì điều đó ?
Dialogue: 0,0:11:03.45,0:11:06.54,Dialogue,,0000,0000,0000,,Tôi không cản cậu ấy chỉ vì muốn cậu biết ơn.
Dialogue: 0,0:11:06.62,0:11:08.71,Dialogue,,0000,0000,0000,,Đó là sự tự mãn ngớ ngẩn.
Dialogue: 0,0:11:08.79,0:11:13.59,Dialogue,,0000,0000,0000,,Cô thích chọn đường khó nhỉ.
Dialogue: 0,0:11:13.67,0:11:16.46,Dialogue,,0000,0000,0000,,Tôi không quan tâm nếu cậu nghĩ như thế.
Dialogue: 0,0:11:18.38,0:11:19.47,Dialogue,,0000,0000,0000,,Cậu đang nói chuyện gì vậy?
Dialogue: 0,0:11:19.55,0:11:21.72,Dialogue,,0000,0000,0000,,Không có gì.
Dialogue: 0,0:11:24.97,0:11:26.64,Dialogue,,0000,0000,0000,,Cậu làm cái gì thế hả?
Dialogue: 0,0:11:26.72,0:11:29.93,Dialogue,,0000,0000,0000,,Tôi không cố ý, chỉ là tai nạn thôi.
Dialogue: 0,0:11:39.90,0:11:42.41,Dialogue,,0000,0000,0000,,Ông đã từng nghe về Takechi Seiji chưa ?
Dialogue: 0,0:11:42.49,0:11:43.66,Dialogue,,0000,0000,0000,,Chưa.
Dialogue: 0,0:11:43.74,0:11:48.70,Dialogue,,0000,0000,0000,,Ông ta là lính đánh thuê người Nhật đã đi qua các chiến trường trên khắp thế giới.
Dialogue: 0,0:11:48.79,0:11:52.21,Dialogue,,0000,0000,0000,,Khi trở về, ông ta bắt đầu công tác phúc lợi.
Dialogue: 0,0:11:52.29,0:11:54.83,Dialogue,,0000,0000,0000,,Tên của tổ chức này đã từng là A21.
Dialogue: 0,0:11:54.92,0:12:01.93,Dialogue,,0000,0000,0000,,Mục đích là cải tạo các tội phạm vị thành niên , những người đã dính vào nhiều rắc rối.
Dialogue: 0,0:12:02.01,0:12:07.51,Dialogue,,0000,0000,0000,,Ông ta tập hợp những người chẳng còn gì và gửi họ đến hòn đảo mà ông đã mua.
Dialogue: 0,0:12:07.60,0:12:12.85,Dialogue,,0000,0000,0000,,Ông ta đã dạy cho họ toàn bộ kỹ năng sống sót và chiến đấu.
Dialogue: 0,0:12:12.94,0:12:16.94,Dialogue,,0000,0000,0000,,Chúng tôi đã học được cách sống sót và chiến thắng trong trận chiến...
Dialogue: 0,0:12:17.02,0:12:20.19,Dialogue,,0000,0000,0000,,nơi mà điện, nước, thức ăn dường như không tồn tại.
Dialogue: 0,0:12:20.28,0:12:22.90,Dialogue,,0000,0000,0000,,Chúng tôi đã đạt được cái gọi là sự tự tin.
Dialogue: 0,0:12:22.99,0:12:28.45,Dialogue,,0000,0000,0000,,Chúng tôi đã rất vui mừng khi nhận ra rằng chúng tôi không cần phải phạm tội nữa.
Dialogue: 0,0:12:28.54,0:12:31.96,Dialogue,,0000,0000,0000,,Nhưng kẻ khác không nghĩ như thế.
Dialogue: 0,0:12:33.79,0:12:36.71,Dialogue,,0000,0000,0000,,Họ chưa đến nữa à?
Dialogue: 0,0:12:36.79,0:12:39.38,Dialogue,,0000,0000,0000,,Cô gọi đây là trường trung học Jindai à ?
Dialogue: 0,0:12:39.46,0:12:40.80,Dialogue,,0000,0000,0000,,Tại sao ngươi lại muốn biết?
Dialogue: 0,0:12:40.88,0:12:44.68,Dialogue,,0000,0000,0000,,Không, tôi chỉ tò mò thôi.
Dialogue: 0,0:12:44.76,0:12:47.68,Dialogue,,0000,0000,0000,,Takuma-san, gia đình cậu có mấy người ?
Dialogue: 0,0:12:47.76,0:12:49.81,Dialogue,,0000,0000,0000,,Chỉ có mỗi người chị.
Dialogue: 0,0:12:49.89,0:12:51.77,Dialogue,,0000,0000,0000,,Cô ấy đang làm gì ?
Dialogue: 0,0:12:51.85,0:12:56.35,Dialogue,,0000,0000,0000,,Sao? Cuộc thẩm vấn không cần phải bao gồm cả gia đình tôi .
Dialogue: 0,0:12:56.44,0:13:01.99,Dialogue,,0000,0000,0000,,Đây không phải là thẩm vấn. Tôi chỉ tự hỏi không biết cậu là người như thế nào.
Dialogue: 0,0:13:02.07,0:13:05.66,Dialogue,,0000,0000,0000,,Vì cậu mà chúng tôi phải ở trong tình trạng này.
Dialogue: 0,0:13:05.74,0:13:09.62,Dialogue,,0000,0000,0000,,Sẽ chẳng hại gì cả nếu cậu trò chuyện với tôi.
Dialogue: 0,0:13:09.70,0:13:12.45,Dialogue,,0000,0000,0000,,Tôi có một người anh trai.
Dialogue: 0,0:13:12.54,0:13:15.71,Dialogue,,0000,0000,0000,,Cho đến giờ chúng tôi vẫn xa cách nhau.
Dialogue: 0,0:13:15.79,0:13:24.30,Dialogue,,0000,0000,0000,,Lúc 6 tuổi, tôi có thể trả lời chính xác 10 nguyên tố của Einstein, phương trình vi phân phi tuyến.
Dialogue: 0,0:13:24.38,0:13:28.55,Dialogue,,0000,0000,0000,,Nhưng anh tôi đã có thể làm lúc 4 tuổi.
Dialogue: 0,0:13:28.64,0:13:30.10,Dialogue,,0000,0000,0000,,Điều đó thật tuyệt vời phải không?
Dialogue: 0,0:13:30.18,0:13:34.93,Dialogue,,0000,0000,0000,,Phải, tớ luôn cảm thấy thua kém anh trai mình.
Dialogue: 0,0:13:35.02,0:13:36.85,Dialogue,,0000,0000,0000,,Và...
Dialogue: 0,0:13:36.94,0:13:41.48,Dialogue,,0000,0000,0000,,Làm thế nào mà cô có thể sống cùng với người anh đó?
Dialogue: 0,0:13:41.57,0:13:46.40,Dialogue,,0000,0000,0000,,Tôi cho rằng cách thích hợp nhất là tôi để được bảo vệ.
Dialogue: 0,0:13:46.49,0:13:50.58,Dialogue,,0000,0000,0000,,Nó có thể không là một mối quan hệ lành mạnh.
Dialogue: 0,0:13:51.66,0:13:54.50,Dialogue,,0000,0000,0000,,Cậu cũng cảm thấy thua kém chị mình phải không ?
Dialogue: 0,0:13:54.58,0:13:55.37,Dialogue,,0000,0000,0000,,Sao cơ?
Dialogue: 0,0:13:55.41,0:13:57.29,Dialogue,,0000,0000,0000,,Tôi có thể hiểu được.
Dialogue: 0,0:13:57.37,0:14:02.13,Dialogue,,0000,0000,0000,,Đó có thể là sự đồng cảm, cậu không nghĩ vậy à?
Dialogue: 0,0:14:02.21,0:14:08.13,Dialogue,,0000,0000,0000,,Nó có thể là cảm giác tự ti bởi vì tôi ngưỡng mộ chị mình.
Dialogue: 0,0:14:08.22,0:14:11.60,Dialogue,,0000,0000,0000,,Đây là lần đầu tiên cậu nói với tôi về bản thân mình đấy.
Dialogue: 0,0:14:17.52,0:14:21.65,Dialogue,,0000,0000,0000,,Có lần, một đài truyền hình đã phát hiện ra chúng tôi.
Dialogue: 0,0:14:21.73,0:14:23.73,Dialogue,,0000,0000,0000,,Họ đã đến hòn đảo mà không có sự cho phép.
Dialogue: 0,0:14:23.82,0:14:26.03,Dialogue,,0000,0000,0000,,Họ chạm vào các trang thiết bị và tai nạn đã xảy ra.
Dialogue: 0,0:14:26.11,0:14:28.20,Dialogue,,0000,0000,0000,,Sau đó là một mớ hỗn độn.
Dialogue: 0,0:14:28.28,0:14:32.24,Dialogue,,0000,0000,0000,,Họ buộc tội chúng tôi mặc dù chúng tôi chẳng làm gì cả.
Dialogue: 0,0:14:32.33,0:14:34.95,Dialogue,,0000,0000,0000,,Họ đã gọi A21 là tổ chức khủng bố...
Dialogue: 0,0:14:35.04,0:14:37.29,Dialogue,,0000,0000,0000,,và cơ sở huấn luyện bị đóng cửa.
Dialogue: 0,0:14:37.37,0:14:40.63,Dialogue,,0000,0000,0000,,Họ đã tiết lộ quá khứ của các học viên.
Dialogue: 0,0:14:40.71,0:14:41.92,Dialogue,,0000,0000,0000,,Và cả tôi.
Dialogue: 0,0:14:42.00,0:14:43.96,Dialogue,,0000,0000,0000,,Đây là sự trả thù của cô?
Dialogue: 0,0:14:45.71,0:14:50.18,Dialogue,,0000,0000,0000,,Chúng tôi muốn tô điểm lên cái thành phố yên bình này bằng màu của chúng tôi.
Dialogue: 0,0:14:50.26,0:14:55.01,Dialogue,,0000,0000,0000,,Nếu ông gọi đó là sự trả thù, cũng đúng thôi.
Dialogue: 0,0:14:55.10,0:15:01.27,Dialogue,,0000,0000,0000,,Phá hủy tất cả và bao trùm nó bằng ngọn lửa kinh hoàng.
Dialogue: 0,0:15:01.36,0:15:03.31,Dialogue,,0000,0000,0000,,Đó là điều mà tôi muốn.
Dialogue: 0,0:15:06.69,0:15:07.90,Dialogue,,0000,0000,0000,,Cô đi đâu vậy?
Dialogue: 0,0:15:07.99,0:15:11.20,Dialogue,,0000,0000,0000,,Cậu thường hay hỏi thế này với một cô gái à ?
Dialogue: 0,0:15:11.28,0:15:12.70,Dialogue,,0000,0000,0000,,Cô đang nói gì vậy?
Dialogue: 0,0:15:12.78,0:15:14.62,Dialogue,,0000,0000,0000,,Toilet! Toilet đó!
Dialogue: 0,0:15:14.70,0:15:16.70,Dialogue,,0000,0000,0000,,Tớ sẽ đi với cậu.
Dialogue: 0,0:15:16.79,0:15:18.20,Dialogue,,0000,0000,0000,,Như vậy thì tôi cũng đi.
Dialogue: 0,0:15:18.29,0:15:20.12,Dialogue,,0000,0000,0000,,Không, cậu không được!
Dialogue: 0,0:15:20.21,0:15:24.17,Dialogue,,0000,0000,0000,,Hắn ta không có ý tứ gì cả. Không thể tin được!
Dialogue: 0,0:15:25.80,0:15:28.05,Dialogue,,0000,0000,0000,,Có gì đó ma quái.
Dialogue: 0,0:15:28.13,0:15:31.76,Dialogue,,0000,0000,0000,,Ngôi trường này có đầy những câu chuyện đáng sợ.
Dialogue: 0,0:15:31.84,0:15:36.85,Dialogue,,0000,0000,0000,,Giống như câu chuyện cực kỳ kinh khủng của cậu bé quái vật.
Dialogue: 0,0:15:36.93,0:15:39.64,Dialogue,,0000,0000,0000,,Nó là gì vậy?
Dialogue: 0,0:15:39.73,0:15:41.69,Dialogue,,0000,0000,0000,,Đó là...
Dialogue: 0,0:15:45.77,0:15:47.40,Dialogue,,0000,0000,0000,,Thật là bậy bạ.
Dialogue: 0,0:15:47.48,0:15:49.65,Dialogue,,0000,0000,0000,,Thế nào? Đáng sợ chứ ?
Dialogue: 0,0:15:49.74,0:15:54.32,Dialogue,,0000,0000,0000,,Chúa ơi, tớ có thể chết nếu như gặp kẻ như thế.
Dialogue: 0,0:16:00.96,0:16:05.50,Dialogue,,0000,0000,0000,,Anou... Chidori-san. Xin đừng đi ra trước.
Dialogue: 0,0:16:05.59,0:16:08.17,Dialogue,,0000,0000,0000,,Để tớ nghĩ xem...
Dialogue: 0,0:16:12.01,0:16:14.72,Dialogue,,0000,0000,0000,,Lâu quá.
Dialogue: 0,0:16:14.80,0:16:17.18,Dialogue,,0000,0000,0000,,Họ đã tìm thấy rồi.
Dialogue: 0,0:16:20.77,0:16:22.14,Dialogue,,0000,0000,0000,,Tên khốn!
Dialogue: 0,0:16:22.23,0:16:24.19,Dialogue,,0000,0000,0000,,Cậu muốn trả lời không ?
Dialogue: 0,0:16:25.77,0:16:28.15,Dialogue,,0000,0000,0000,,Chúng tôi đã có hai người phụ nữ.
Dialogue: 0,0:16:28.23,0:16:32.03,Dialogue,,0000,0000,0000,,Hãy ra ngoài cùng với cậu ta ngay bây giờ!
Dialogue: 0,0:16:33.45,0:16:36.20,Dialogue,,0000,0000,0000,,Phải, tôi đã chôm nó vào lúc đó.
Dialogue: 0,0:16:37.79,0:16:42.41,Dialogue,,0000,0000,0000,,Và tôi đã bí mật gọi cho đồng bọn và để họ biết tôi đang ở đâu.
Dialogue: 0,0:16:42.50,0:16:45.58,Dialogue,,0000,0000,0000,,Cô gọi đây là trường trung học Jindai à?
Dialogue: 0,0:16:45.67,0:16:48.46,Dialogue,,0000,0000,0000,,Cú lừa ngoạn mục phải không?
Dialogue: 0,0:17:12.82,0:17:14.99,Dialogue,,0000,0000,0000,,Đừng suy nghĩ hay làm bất cứ điều gì ngu ngốc !
Dialogue: 0,0:17:15.07,0:17:17.66,Dialogue,,0000,0000,0000,,Tôi hiểu. Hãy nói cách thức thả người.
Dialogue: 0,0:17:17.74,0:17:22.08,Dialogue,,0000,0000,0000,,Tôi sẽ thả một người. Còn cậu bỏ còng tay ra.
Dialogue: 0,0:17:22.16,0:17:23.08,Dialogue,,0000,0000,0000,,Được.
Dialogue: 0,0:17:23.16,0:17:27.00,Dialogue,,0000,0000,0000,,Cậu muốn thả người nào trước?
Dialogue: 0,0:17:27.08,0:17:32.55,Dialogue,,0000,0000,0000,,Người được thả đầu tiên sẽ an toàn hơn người còn lại.
Dialogue: 0,0:17:32.63,0:17:35.47,Dialogue,,0000,0000,0000,,Người còn lại sẽ phải gặp nguy hiểm.
Dialogue: 0,0:17:35.55,0:17:42.64,Dialogue,,0000,0000,0000,,Đừng lo lắng. Cậu là dân thường. An toàn của cậu là điều ưu tiên.
Dialogue: 0,0:17:42.73,0:17:46.52,Dialogue,,0000,0000,0000,,Sự an toàn của Chidori, người không thuộc Mithirl, là ưu tiên hàng đầu.
Dialogue: 0,0:17:46.60,0:17:53.19,Dialogue,,0000,0000,0000,,Nhưng khi xung đột, liệu Thuyền trưởng có thể chạy đến nơi an toàn được không?
Dialogue: 0,0:17:53.28,0:17:55.95,Dialogue,,0000,0000,0000,,Với khả năng của cô ấy, nếu cô ấy không được thả đầu tiên...
Dialogue: 0,0:17:56.03,0:17:59.24,Dialogue,,0000,0000,0000,,Mình có thể hình dung cô ấy không có nhiều khả năng sống sót.
Dialogue: 0,0:17:59.32,0:18:02.70,Dialogue,,0000,0000,0000,,Không, điều đó là vô vọng.
Dialogue: 0,0:18:10.00,0:18:11.17,Dialogue,,0000,0000,0000,,Chidori...
Dialogue: 0,0:18:11.25,0:18:13.67,Dialogue,,0000,0000,0000,,Làm quái gì lâu thế ? Nhanh lên!
Dialogue: 0,0:18:13.76,0:18:17.59,Dialogue,,0000,0000,0000,,Hãy thả người phụ nữ da trắng trước. Người Nhật Bản sẽ thả sau.
Dialogue: 0,0:18:29.31,0:18:34.48,Dialogue,,0000,0000,0000,,Chidori-san có vẻ khỏe mạnh còn Testarossa-san thì...
Dialogue: 0,0:18:34.57,0:18:36.53,Dialogue,,0000,0000,0000,,Im đi !
Dialogue: 0,0:18:36.61,0:18:39.20,Dialogue,,0000,0000,0000,,Thuyền trưởng, hãy đứng phía sau tôi.
Dialogue: 0,0:18:40.37,0:18:43.16,Dialogue,,0000,0000,0000,,Đây là sự nhục nhã, trung sĩ Sagara.
Dialogue: 0,0:18:43.24,0:18:47.04,Dialogue,,0000,0000,0000,,Cậu nghĩ rằng tôi không chuẩn bị trước cho những tình huống thế này sao?
Dialogue: 0,0:18:47.12,0:18:48.71,Dialogue,,0000,0000,0000,,Tôi sẽ nhận hình phạt sau.
Dialogue: 0,0:18:51.75,0:18:54.34,Dialogue,,0000,0000,0000,,Bây giờ để cậu ta đi.
Dialogue: 0,0:19:07.31,0:19:08.89,Dialogue,,0000,0000,0000,,Xung quanh đây có các tay súng bắn tỉa.
Dialogue: 0,0:19:08.98,0:19:11.56,Dialogue,,0000,0000,0000,,Khi tôi ra hiệu, xin hãy chạy về phía các phòng học.
Dialogue: 0,0:19:11.65,0:19:14.48,Dialogue,,0000,0000,0000,,Cậu bảo tôi bỏ trốn một mình ư ?
Dialogue: 0,0:19:14.57,0:19:16.69,Dialogue,,0000,0000,0000,,Nếu không như thế, cô sẽ gặp nguy hiểm.
Dialogue: 0,0:19:16.78,0:19:19.20,Dialogue,,0000,0000,0000,,Tôi không thể trốn và để dân thường gặp nguy hiểm được.
Dialogue: 0,0:19:19.28,0:19:20.66,Dialogue,,0000,0000,0000,,Thuyền trưởng!
Dialogue: 0,0:19:29.21,0:19:30.25,Dialogue,,0000,0000,0000,,Ngay bây giờ!
Dialogue: 0,0:19:41.64,0:19:43.64,Dialogue,,0000,0000,0000,,Chạy đi, Chidori!
Dialogue: 0,0:19:43.72,0:19:46.64,Dialogue,,0000,0000,0000,,Tên kia! Ta không để cho ngươi thoát đâu!
Dialogue: 0,0:19:46.72,0:19:48.60,Dialogue,,0000,0000,0000,,Dừng lại đi, Chidori! Chạy đi!
Dialogue: 0,0:19:48.68,0:19:49.85,Dialogue,,0000,0000,0000,,Tôi sẽ bắt cậu ta.
Dialogue: 0,0:19:49.94,0:19:51.27,Dialogue,,0000,0000,0000,,Thuyền trưởng!
Dialogue: 0,0:19:55.02,0:19:57.40,Dialogue,,0000,0000,0000,,Bỏ đi! Cậu cần phải trốn !
Dialogue: 0,0:19:57.48,0:19:59.86,Dialogue,,0000,0000,0000,,Sao cậu quay lại đây?
Dialogue: 0,0:20:14.38,0:20:16.09,Dialogue,,0000,0000,0000,,Chắc là hắn tiêu rồi.
Dialogue: 0,0:20:16.17,0:20:20.42,Dialogue,,0000,0000,0000,,Không cần phải khóc. Cô sẽ theo hắn sớm thôi...
Dialogue: 0,0:20:20.51,0:20:23.09,Dialogue,,0000,0000,0000,,Khoan đã! Đừng giết cô ấy.
Dialogue: 0,0:20:23.18,0:20:24.22,Dialogue,,0000,0000,0000,,Cái gì?!
Dialogue: 0,0:20:24.30,0:20:28.22,Dialogue,,0000,0000,0000,,Cô ấy là... Không, không có gì.
Dialogue: 0,0:20:28.31,0:20:31.10,Dialogue,,0000,0000,0000,,Vâng, chúng tôi đã bắt giữ chúng.
Dialogue: 0,0:20:31.18,0:20:33.35,Dialogue,,0000,0000,0000,,Sao? Nhưng mà...
Dialogue: 0,0:20:33.44,0:20:35.52,Dialogue,,0000,0000,0000,,Được, tôi hiểu rồi.
Dialogue: 0,0:20:35.61,0:20:37.57,Dialogue,,0000,0000,0000,,Seina nói không được giết chúng.
Dialogue: 0,0:20:37.65,0:20:39.61,Dialogue,,0000,0000,0000,,Chúng ta sẽ đem chúng theo.
Dialogue: 0,0:20:46.53,0:20:47.91,Dialogue,,0000,0000,0000,,Sousuke...
Dialogue: 0,0:21:13.23,0:21:24.82,Songs (Romanji),,0000,0000,0000,,Kokoro ni chiisana hana ga saiteru
Dialogue: 0,0:21:24.91,0:21:36.08,Songs (Romanji),,0000,0000,0000,,Kimi kara moratta karenai hana ga
Dialogue: 0,0:21:36.17,0:21:42.00,Songs (Romanji),,0000,0000,0000,,Shinjiru koto mo kowagaranai kurai
Dialogue: 0,0:21:42.09,0:21:49.35,Songs (Romanji),,0000,0000,0000,,Tsuyoku nareta kara
Dialogue: 0,0:21:49.43,0:21:55.18,Songs (Romanji),,0000,0000,0000,,Kimi ni aete ureshikatta
Dialogue: 0,0:21:55.27,0:22:01.65,Songs (Romanji),,0000,0000,0000,,Tsunaida te ga hokoridatta
Dialogue: 0,0:22:01.73,0:22:08.45,Songs (Romanji),,0000,0000,0000,,Ima wa betsubetsu no sora miagete itemo
Dialogue: 0,0:22:08.53,0:22:16.91,Songs (Romanji),,0000,0000,0000,,Hora arukeru hitori demo
Dialogue: 0,0:21:13.23,0:21:24.82,Songs,,0000,0000,0000,,Bông hoa nhỏ trong tim em
Dialogue: 0,0:21:24.91,0:21:36.08,Songs,,0000,0000,0000,,Bông hoa không bao giờ tàn mà anh đã tặng em
Dialogue: 0,0:21:36.17,0:21:42.00,Songs,,0000,0000,0000,,Em không hề sợ hãi, thậm chí luôn tin tưởng
Dialogue: 0,0:21:42.09,0:21:49.35,Songs,,0000,0000,0000,,Đó là điều khiến em trở nên mạnh mẽ
Dialogue: 0,0:21:49.43,0:21:55.18,Songs,,0000,0000,0000,,Em rất hạnh phúc vì đã gặp anh
Dialogue: 0,0:21:55.27,0:22:01.65,Songs,,0000,0000,0000,,Em tự hào khi nắm tay anh
Dialogue: 0,0:22:01.73,0:22:08.45,Songs,,0000,0000,0000,,Dù cho hai ta hướng về bầu trời khác nhau
Dialogue: 0,0:22:08.53,0:22:16.91,Songs,,0000,0000,0000,,Anh thấy không, em có thể tự mình bước đi
Dialogue: 0,0:22:25.85,0:22:30.23,Dialogue,,0000,0000,0000,,"Bộ phim này hoàn toàn là hư cấu.\N Tên nhân vật và các tổ chức trong phim không liên quan đến bất cứ cá nhân, tổ chức nào."
Dialogue: 0,0:22:30.93,0:22:33.22,Dialogue,,0000,0000,0000,,Cậu ấy không chết dễ dàng như thế đâu.
Dialogue: 0,0:22:33.31,0:22:36.48,Dialogue,,0000,0000,0000,,Tôi tin chắc rằng cậu ấy sẽ cứu chúng ta. Chúng ta chỉ cần cầm cự đến lúc đó.
Dialogue: 0,0:22:36.56,0:22:39.27,Dialogue,,0000,0000,0000,,Nhưng mà chiếc AS khủng lồ gì thế này ?!
Dialogue: 0,0:22:39.35,0:22:43.07,Dialogue,,0000,0000,0000,,Kỳ tới Full Metal Panic: tập 11, "Sự thức tỉnh của Behemoth."
Dialogue: 0,0:22:43.15,0:22:44.57,Dialogue,,0000,0000,0000,,Nhanh lên nào, Sousuke!
Dialogue: 0,0:22:44.65,0:22:46.61,Dialogue,,0000,0000,0000,,Odaiba ở đây à?
