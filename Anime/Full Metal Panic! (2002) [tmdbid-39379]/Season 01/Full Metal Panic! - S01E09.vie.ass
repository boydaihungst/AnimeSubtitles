Dialogue: 0,0:00:16.51,0:00:23.77,Songs (Romanji),,0000,0000,0000,,Futari de nigebasho sagashite
Dialogue: 0,0:00:23.85,0:00:31.40,Songs (Romanji),,0000,0000,0000,,Hashitta tenki ame no naka
Dialogue: 0,0:00:31.49,0:00:38.83,Songs (Romanji),,0000,0000,0000,,Tatoeba nanika wo ushinau toshite mo
Dialogue: 0,0:00:38.91,0:00:47.67,Songs (Romanji),,0000,0000,0000,,Mamotte ikanakya hitotsu dake wa
Dialogue: 0,0:00:47.75,0:00:54.80,Songs (Romanji),,0000,0000,0000,,Kono sekai ni umareta sono imi wo
Dialogue: 0,0:00:54.88,0:01:00.43,Songs (Romanji),,0000,0000,0000,,Kimi to mitsuke ni yukou
Dialogue: 0,0:01:00.52,0:01:05.64,Songs (Romanji),,0000,0000,0000,,Itami sae mo kakaenagara
Dialogue: 0,0:01:05.73,0:01:12.53,Songs (Romanji),,0000,0000,0000,,Atarashii keshiki mukae ni yukou
Dialogue: 0,0:00:16.51,0:00:23.77,Songs,,0000,0000,0000,,Hai chúng ta đang tìm một nơi để trốn thoát
Dialogue: 0,0:00:23.85,0:00:31.40,Songs,,0000,0000,0000,,Cùng chạy dưới ánh nắng chói chang
Dialogue: 0,0:00:31.49,0:00:38.83,Songs,,0000,0000,0000,,Ngay cả khi em mất một điều gì khác
Dialogue: 0,0:00:38.91,0:00:47.67,Songs,,0000,0000,0000,,Thì em chỉ muốn giữ lấy một điều duy nhất
Dialogue: 0,0:00:47.75,0:00:54.80,Songs,,0000,0000,0000,,Ý nghĩa khi được sinh ra ở thế giới này
Dialogue: 0,0:00:54.88,0:01:00.43,Songs,,0000,0000,0000,,Hãy đi cùng em và tìm hiểu
Dialogue: 0,0:01:00.52,0:01:05.64,Songs,,0000,0000,0000,,Giữ chặt lấy nó, dù cho là nỗi đau
Dialogue: 0,0:01:05.73,0:01:12.53,Songs,,0000,0000,0000,,Cùng tiến lên đón chào thế giới mới
Dialogue: 0,0:01:15.53,0:01:19.88,Dialogue,,0000,0000,0000,,Translator: MaHiME
Dialogue: 0,0:01:23.88,0:01:29.88,Dialogue,,0000,0000,0000,,Waya fansub presents
Dialogue: 0,0:01:39.01,0:01:43.35,Dialogue,,0000,0000,0000,,Cậu là Kugayama Takuma phải không? Nhà cậu ở đây à ?
Dialogue: 0,0:01:43.43,0:01:46.57,Dialogue,,0000,0000,0000,,Không, tôi đang đi học ở đây một thời gian.
Dialogue: 0,0:01:47.35,0:01:48.44,Dialogue,,0000,0000,0000,,Một mình à ?
Dialogue: 0,0:01:48.52,0:01:49.65,Dialogue,,0000,0000,0000,,Vâng.
Dialogue: 0,0:01:52.15,0:01:54.53,Dialogue,,0000,0000,0000,,Cà vạt của ông bị cong rồi.
Dialogue: 0,0:01:54.61,0:01:57.40,Dialogue,,0000,0000,0000,,Gia đình cậu không lo lắng cho cậu sao ?
Dialogue: 0,0:01:57.49,0:02:00.45,Dialogue,,0000,0000,0000,,Không hẳn, họ tin tưởng tôi.
Dialogue: 0,0:02:02.83,0:02:05.54,Dialogue,,0000,0000,0000,,Đó không phải là chuyện của ông. Mau thắt cà vạt lại !
Dialogue: 0,0:02:05.62,0:02:07.50,Dialogue,,0000,0000,0000,,Cậu có thể đi.
Dialogue: 0,0:02:07.58,0:02:08.21,Dialogue,,0000,0000,0000,,Vâng?
Dialogue: 0,0:02:08.25,0:02:10.83,Dialogue,,0000,0000,0000,,Tôi nói là cậu có thể đi.
Dialogue: 0,0:02:13.63,0:02:17.76,Dialogue,,0000,0000,0000,,Sửa nó nhanh lên! Nó đang làm tôi phát cáu.
Dialogue: 0,0:02:17.84,0:02:20.47,Dialogue,,0000,0000,0000,,Ông đã nói gì về cái cà vạt ?
Dialogue: 0,0:02:20.55,0:02:22.93,Dialogue,,0000,0000,0000,,Hả, cậu đang nói cái gì thế ?
Dialogue: 0,0:02:25.06,0:02:27.02,Dialogue,,0000,0000,0000,,Không thể tha thứ cho hắn được.
Dialogue: 0,0:02:27.10,0:02:29.52,Dialogue,,0000,0000,0000,,Nhất định hắn đang cười nhạo mình.
Dialogue: 0,0:02:29.60,0:02:30.98,Dialogue,,0000,0000,0000,,Nee-san!
Dialogue: 0,0:02:32.44,0:02:35.40,Dialogue,,0000,0000,0000,,Này cậu. Cậu không sao chứ ?
Dialogue: 0,0:02:48.03,0:02:49.88,Dialogue,,0000,0000,0000,,"Nguy hiểm tại nhà."
Dialogue: 0,0:02:57.84,0:02:59.05,Dialogue,,0000,0000,0000,,Xác nhận tọa độ mục tiêu.
Dialogue: 0,0:02:59.13,0:03:02.76,Dialogue,,0000,0000,0000,,Kẻ địch triển khai lực lượng trong phạm vi 2.4 kilomet vuông.
Dialogue: 0,0:03:02.85,0:03:04.93,Dialogue,,0000,0000,0000,,9 xe thiết giáp và 3 xe tăng.
Dialogue: 0,0:03:05.01,0:03:10.56,Dialogue,,0000,0000,0000,,Okay! Uruz 7 và tôi sẽ chăm sóc đám chiến xa ở khu vực B và C.
Dialogue: 0,0:03:10.65,0:03:13.31,Dialogue,,0000,0000,0000,,Uruz 6 sẽ yểm trợ phía sau và lo những tên lính khác.
Dialogue: 0,0:03:13.40,0:03:14.52,Dialogue,,0000,0000,0000,,Đừng quậy phá gì đấy.
Dialogue: 0,0:03:14.61,0:03:18.07,Dialogue,,0000,0000,0000,,Bà chị ơi, đây là trận đầu tiên sau khi tôi hồi phục mà.
Dialogue: 0,0:03:18.15,0:03:19.78,Dialogue,,0000,0000,0000,,Có thể đãi tôi một bữa chứ ?
Dialogue: 0,0:03:19.86,0:03:24.12,Dialogue,,0000,0000,0000,,Một người vừa bình phục thì không nên ăn bữa tối linh đình.
Dialogue: 0,0:03:24.20,0:03:25.91,Dialogue,,0000,0000,0000,,Cậu nghe rõ chứ, Uruz 7?
Dialogue: 0,0:03:25.99,0:03:27.91,Dialogue,,0000,0000,0000,,Uruz 7, nghe rõ.
Dialogue: 0,0:03:28.00,0:03:29.75,Dialogue,,0000,0000,0000,,Gỡ bỏ ESC.
Dialogue: 0,0:03:52.40,0:03:54.69,Dialogue,,0000,0000,0000,,Các ngươi không thoát được đâu. Đầu hàng đi!
Dialogue: 0,0:03:58.32,0:03:59.90,Dialogue,,0000,0000,0000,,Không có ư ?
Dialogue: 0,0:03:59.99,0:04:05.41,Dialogue,,0000,0000,0000,,Vâng, thưa thuyền trưởng. Không có dấu hiệu nào của nhóm khủng bố A21.
Dialogue: 0,0:04:05.49,0:04:09.91,Dialogue,,0000,0000,0000,,Thế à? Xin lỗi vì đã lãng phí thời gian của chị.
Dialogue: 0,0:04:10.00,0:04:12.75,Dialogue,,0000,0000,0000,,Đừng lo lắng. Đó không phải là lỗi của cô.
Dialogue: 0,0:04:12.83,0:04:16.67,Dialogue,,0000,0000,0000,,Vậy thì hãy quay về như kế hoạch. Tôi sẽ chờ chị.
Dialogue: 0,0:04:16.75,0:04:18.09,Dialogue,,0000,0000,0000,,Rõ.
Dialogue: 0,0:04:19.67,0:04:21.38,Dialogue,,0000,0000,0000,,Chuyện thế này cũng thường xảy ra.
Dialogue: 0,0:04:21.47,0:04:24.93,Dialogue,,0000,0000,0000,,Đó là vấn đề mà cháu không thể bỏ qua bằng cách nói "nó cũng thường xảy ra".
Dialogue: 0,0:04:25.01,0:04:31.35,Dialogue,,0000,0000,0000,,Nhóm khủng bố A21 có các AS được sản xuất tại Xô Viết phải không ?
Dialogue: 0,0:04:31.43,0:04:34.77,Dialogue,,0000,0000,0000,,Có liên lạc từ phó chỉ huy Kalinin ở line G1.
Dialogue: 0,0:04:34.85,0:04:37.06,Dialogue,,0000,0000,0000,,Nối liên lạc.
Dialogue: 0,0:04:37.15,0:04:39.52,Dialogue,,0000,0000,0000,,Chào buổi sáng, thuyền trưởng.
Dialogue: 0,0:04:39.61,0:04:45.61,Dialogue,,0000,0000,0000,,Tôi nhận được tin báo là một thành viên của nhóm A21 đã bị bắt giữ tại sân bay Narita.
Dialogue: 0,0:04:45.70,0:04:47.24,Dialogue,,0000,0000,0000,,Thật sao ?!
Dialogue: 0,0:04:47.33,0:04:53.37,Dialogue,,0000,0000,0000,,Vâng, cậu nhóc bị bắt dường như cũng có phản ứng đó.
Dialogue: 0,0:04:53.46,0:04:54.25,Dialogue,,0000,0000,0000,,Có nghĩa là...
Dialogue: 0,0:04:54.29,0:05:01.05,Dialogue,,0000,0000,0000,,Có nghĩa là cậu nhóc đó có thể có khả năng vận hành Lambda Driver.
Dialogue: 0,0:05:02.26,0:05:06.64,Dialogue,,0000,0000,0000,,Không có người Nhật Bản nào cả. Thông tin bị sai lệch sao ? Khốn thật!
Dialogue: 0,0:05:06.72,0:05:09.14,Dialogue,,0000,0000,0000,,Coi nào, biết sao được.
Dialogue: 0,0:05:09.22,0:05:11.97,Dialogue,,0000,0000,0000,,Đi đến điểm tập kết với máy bay chuyên chở thôi.
Dialogue: 0,0:05:12.06,0:05:13.48,Dialogue,,0000,0000,0000,,Chuyện gì thế, Sousuke?
Dialogue: 0,0:05:13.56,0:05:15.52,Dialogue,,0000,0000,0000,,Tôi đã hoàn toàn quên mất.
Dialogue: 0,0:05:15.60,0:05:16.40,Dialogue,,0000,0000,0000,,Quên gì ?
Dialogue: 0,0:05:16.44,0:05:19.90,Dialogue,,0000,0000,0000,,Đừng nói là cậu quên mã số radio bí mật hoặc cái gì đó quan trọng.
Dialogue: 0,0:05:19.98,0:05:23.15,Dialogue,,0000,0000,0000,,Không, tôi quên mất lời hứa với cô ấy.
Dialogue: 0,0:05:23.24,0:05:26.70,Dialogue,,0000,0000,0000,,Đó là lúc 1900 giờ ngày hôm qua. Cô ấy chắc là rất tức giận.
Dialogue: 0,0:05:26.78,0:05:30.41,Dialogue,,0000,0000,0000,,Lời hứa với ai ?
Dialogue: 0,0:05:30.49,0:05:34.08,Dialogue,,0000,0000,0000,,Tôi không rành về lịch sử Nhật Bản.
Dialogue: 0,0:05:37.21,0:05:41.13,Dialogue,,0000,0000,0000,,Strike! Batter out!
Dialogue: 0,0:05:37.21,0:05:41.13,Signs,,0000,0000,0000,, Batter : người đánh bóng.
Dialogue: 0,0:05:47.01,0:05:50.22,Dialogue,,0000,0000,0000,,Tuyệt quá, Kana-chan! Cậu làm 3 strike-outs trong một ván luôn.
Dialogue: 0,0:05:50.30,0:05:52.72,Dialogue,,0000,0000,0000,,Dễ ẹc ấy mà.
Dialogue: 0,0:05:52.81,0:05:58.31,Dialogue,,0000,0000,0000,,Nhưng mà cậu không nghĩ là hơi trẻ con khi quá nghiêm túc trong buổi tập bóng chày à?
Dialogue: 0,0:06:00.77,0:06:02.98,Dialogue,,0000,0000,0000,,Cậu đã có chuyện gì đó với Sagara-kun ?
Dialogue: 0,0:06:03.07,0:06:06.53,Dialogue,,0000,0000,0000,,Cậu nói với tớ là cậu đang giúp Sagara-kun học, phải không ?
Dialogue: 0,0:06:06.61,0:06:08.61,Dialogue,,0000,0000,0000,,Cậu ấy lại làm sai chuyện gì à ?
Dialogue: 0,0:06:08.70,0:06:12.91,Dialogue,,0000,0000,0000,,À, không có gì! Thật sự là không có gì hết!
Dialogue: 0,0:06:12.99,0:06:15.04,Dialogue,,0000,0000,0000,,Bởi vì hắn dám cho tớ leo cây.
Dialogue: 0,0:06:15.12,0:06:16.71,Dialogue,,0000,0000,0000,,Không có gì hết.
Dialogue: 0,0:06:18.21,0:06:19.79,Dialogue,,0000,0000,0000,,Tới lượt cậu kìa, Kaname!
Dialogue: 0,0:06:19.88,0:06:21.84,Dialogue,,0000,0000,0000,,Vânggg!
Dialogue: 0,0:06:23.05,0:06:25.05,Dialogue,,0000,0000,0000,,Sousuke...
Dialogue: 0,0:06:29.34,0:06:31.72,Dialogue,,0000,0000,0000,,...là tên đại ngốc!
Dialogue: 0,0:06:35.02,0:06:36.39,Dialogue,,0000,0000,0000,,Hay lắm!
Dialogue: 0,0:06:54.16,0:06:55.62,Dialogue,,0000,0000,0000,,Cái gì thế này?!
Dialogue: 0,0:06:57.21,0:06:58.66,Dialogue,,0000,0000,0000,,Sousuke?!
Dialogue: 0,0:06:58.75,0:07:01.75,Dialogue,,0000,0000,0000,,Tôi nghĩ là mình đã kịp giờ để vào tiết thứ hai.
Dialogue: 0,0:07:01.83,0:07:04.84,Dialogue,,0000,0000,0000,,Không uổng công tôi bay hết tốc lực về đây từ biển Nam Trung Hoa.
Dialogue: 0,0:07:04.92,0:07:06.34,Dialogue,,0000,0000,0000,,Cậu...
Dialogue: 0,0:07:06.42,0:07:07.42,Dialogue,,0000,0000,0000,,Chidori...
Dialogue: 0,0:07:07.51,0:07:08.47,Dialogue,,0000,0000,0000,,Sao?
Dialogue: 0,0:07:08.55,0:07:12.68,Dialogue,,0000,0000,0000,,Về lời hứa ngày hôm qua, cô có giận không?
Dialogue: 0,0:07:12.76,0:07:17.93,Dialogue,,0000,0000,0000,,Không hề! Tớ chẳng giận gì cả! Nó chẳng làm tớ bận tâm tý nào.
Dialogue: 0,0:07:18.02,0:07:19.31,Dialogue,,0000,0000,0000,,May quá.
Dialogue: 0,0:07:19.39,0:07:23.31,Dialogue,,0000,0000,0000,,Tôi đã có chuyện rất quan trọng phải làm và tôi quên bẵng lời hứa đó.
Dialogue: 0,0:07:23.40,0:07:25.11,Dialogue,,0000,0000,0000,,Quên ư?!
Dialogue: 0,0:07:27.82,0:07:28.69,Dialogue,,0000,0000,0000,,Kana-chan!
Dialogue: 0,0:07:28.78,0:07:30.53,Dialogue,,0000,0000,0000,,Tên đại ngốc này!
Dialogue: 0,0:07:41.29,0:07:43.71,Dialogue,,0000,0000,0000,,Touch out!
Dialogue: 0,0:07:48.59,0:07:51.26,Dialogue,,0000,0000,0000,,Woa, hộp cơm trưa hoành tráng quá.
Dialogue: 0,0:07:53.85,0:07:55.22,Dialogue,,0000,0000,0000,,Tớ sẽ lấy trứng tráng cuộn!
Dialogue: 0,0:07:55.30,0:07:57.89,Dialogue,,0000,0000,0000,,Còn tớ lấy kem ốc!
Dialogue: 0,0:07:57.97,0:08:02.56,Dialogue,,0000,0000,0000,,Các cậu cứ lấy tự nhiên. Tối hôm qua tớ lỡ làm khá nhiều.
Dialogue: 0,0:08:04.77,0:08:07.11,Dialogue,,0000,0000,0000,,Sagara-kun, sao cậu không qua đây ăn chung?
Dialogue: 0,0:08:07.19,0:08:10.24,Dialogue,,0000,0000,0000,,Kana-chan đã làm mấy món này cho cậu đấy.
Dialogue: 0,0:08:10.32,0:08:11.95,Dialogue,,0000,0000,0000,,Tớ không có!
Dialogue: 0,0:08:14.99,0:08:16.24,Dialogue,,0000,0000,0000,,Cậu muốn gì?
Dialogue: 0,0:08:16.33,0:08:19.58,Dialogue,,0000,0000,0000,,Cậu đứng đó chỉ làm tớ bực mình thêm thôi.
Dialogue: 0,0:08:25.33,0:08:26.42,Dialogue,,0000,0000,0000,,Sousuke?
Dialogue: 0,0:08:26.50,0:08:27.92,Dialogue,,0000,0000,0000,,Xin hãy nhận lấy.
Dialogue: 0,0:08:28.00,0:08:31.09,Dialogue,,0000,0000,0000,,Tôi đặc biệt làm nó cho cô.
Dialogue: 0,0:08:34.22,0:08:36.39,Dialogue,,0000,0000,0000,,Cho tớ ?
Dialogue: 0,0:08:40.81,0:08:42.31,Dialogue,,0000,0000,0000,,Woa, bông tai dễ thương quá.
Dialogue: 0,0:08:42.39,0:08:44.31,Dialogue,,0000,0000,0000,,Chiếc vòng đó trông mắc đấy.
Dialogue: 0,0:08:44.40,0:08:46.15,Dialogue,,0000,0000,0000,,Cho tớ xem, cho tớ xem với!
Dialogue: 0,0:08:46.23,0:08:47.61,Dialogue,,0000,0000,0000,,Thôi mà...
Dialogue: 0,0:08:47.69,0:08:50.90,Dialogue,,0000,0000,0000,,Những thứ dễ thương thế này không hợp với tớ đâu.
Dialogue: 0,0:08:50.99,0:08:53.24,Dialogue,,0000,0000,0000,,Có hợp hay không thì cũng không quan trọng.
Dialogue: 0,0:08:53.32,0:08:56.20,Dialogue,,0000,0000,0000,,Lợi ích thực tế là quan trọng nhất.
Dialogue: 0,0:08:56.28,0:08:58.20,Dialogue,,0000,0000,0000,,Lợi ích thực tế?
Dialogue: 0,0:08:58.28,0:09:01.75,Dialogue,,0000,0000,0000,,Những viên đạn quang dùng để tự vệ được thiết kế để đeo trên tai...
Dialogue: 0,0:09:01.83,0:09:04.50,Dialogue,,0000,0000,0000,,giúp cô có thể nhanh chóng ném chúng vào kẻ thù.
Dialogue: 0,0:09:04.58,0:09:07.88,Dialogue,,0000,0000,0000,,Vì chúng giống như bông tai nên kẻ thù sẽ không thể nhận ra đó là đạn quang.
Dialogue: 0,0:09:07.96,0:09:11.09,Dialogue,,0000,0000,0000,,Có nhiều trường hợp khi tôi không thể giữ lời hứa với cô.
Dialogue: 0,0:09:11.17,0:09:13.63,Dialogue,,0000,0000,0000,,Hãy dùng nó để tự bảo vệ mình.
Dialogue: 0,0:09:13.72,0:09:15.88,Dialogue,,0000,0000,0000,,Lời hứa của mình!
Dialogue: 0,0:09:15.97,0:09:17.93,Dialogue,,0000,0000,0000,,Phải rồi...
Dialogue: 0,0:09:17.97,0:09:19.93,Dialogue,,0000,0000,0000,,CÁM ƠN CẬU!
Dialogue: 0,0:09:18.97,0:09:20.93,Dialogue,,0000,0000,0000,,Và cái vòng tay là...
Dialogue: 0,0:09:43.20,0:09:46.16,Dialogue,,0000,0000,0000,,Chúng tôi đang chờ cô, thuyền trưởng.
Dialogue: 0,0:09:50.42,0:09:52.34,Dialogue,,0000,0000,0000,,Tình hình an ninh ở đây thế nào?
Dialogue: 0,0:09:52.42,0:09:57.13,Dialogue,,0000,0000,0000,,60 binh sĩ tại 2 trung đội luôn trong cảnh giác cao độ.
Dialogue: 0,0:09:57.22,0:10:01.30,Dialogue,,0000,0000,0000,,Đây là cơ sở xử lý các nghiên cứu tối mật.
Dialogue: 0,0:10:01.39,0:10:05.60,Dialogue,,0000,0000,0000,,Nó hầu như không ai biết đến.
Dialogue: 0,0:10:05.69,0:10:10.06,Dialogue,,0000,0000,0000,,Dĩ nhiên, chúng tôi đã bí mật chuyển cậu ta đến đây.
Dialogue: 0,0:10:33.42,0:10:35.01,Dialogue,,0000,0000,0000,,Đã xảy ra chuyện gì?
Dialogue: 0,0:10:35.09,0:10:38.68,Dialogue,,0000,0000,0000,,Cậu ta lao vào một sĩ quan tại Narita và bóp cổ ông ta gần chết.
Dialogue: 0,0:10:38.76,0:10:39.55,Dialogue,,0000,0000,0000,,Cậu ta ư ?
Dialogue: 0,0:10:39.59,0:10:40.68,Dialogue,,0000,0000,0000,,Vâng.
Dialogue: 0,0:10:40.76,0:10:45.43,Dialogue,,0000,0000,0000,,Ngay cả khi đã bị khống chế, cậu ta vẫn rất kích động.
Dialogue: 0,0:10:45.52,0:10:49.77,Dialogue,,0000,0000,0000,,Nên họ đã làm xét nghiệm ma túy và phát hiện "TI-971" trong máu cậu ta.
Dialogue: 0,0:10:49.85,0:10:52.69,Dialogue,,0000,0000,0000,,Đó là lý do tại sao cháu được gọi đến.
Dialogue: 0,0:10:52.77,0:10:56.53,Dialogue,,0000,0000,0000,,Vâng, chính phủ Nhật Bản đã bắt giữ cậu ta.
Dialogue: 0,0:10:56.61,0:11:00.61,Dialogue,,0000,0000,0000,,Chúng tôi không còn cách nào khác ngoài việc mời cô đến đây.
Dialogue: 0,0:11:00.70,0:11:02.37,Dialogue,,0000,0000,0000,,Kugayama Takuma...
Dialogue: 0,0:11:02.45,0:11:10.12,Dialogue,,0000,0000,0000,,Cô là người duy nhất có thể cho biết cậu ta đã được đột biến để sử dụng Lambda Driver thành công hay không.
Dialogue: 0,0:11:10.21,0:11:12.83,Dialogue,,0000,0000,0000,,Có thể thấy các triệu chứng của tác dụng phụ trong cậu ta...
Dialogue: 0,0:11:12.92,0:11:16.09,Dialogue,,0000,0000,0000,,như là dấu hiệu bạo lực và mất trí nhớ đột ngột.
Dialogue: 0,0:11:16.17,0:11:19.22,Dialogue,,0000,0000,0000,,Cháu đã đọc các số liệu chi tiết trên đường đến đây...
Dialogue: 0,0:11:19.30,0:11:22.26,Dialogue,,0000,0000,0000,,nhưng cháu không thấy có gì lạ cả.
Dialogue: 0,0:11:40.40,0:11:42.53,Dialogue,,0000,0000,0000,,Thuyền trưởng, cô không sao chứ?
Dialogue: 0,0:11:42.62,0:11:44.41,Dialogue,,0000,0000,0000,,Cháu không sao.
Dialogue: 0,0:11:54.21,0:12:00.88,Dialogue,,0000,0000,0000,,Nếu chúng ta muốn kiểm tra tổng quát cậu ấy thì phải cần đo sự phản ứng với thiết bị NILS di động.
Dialogue: 0,0:12:00.97,0:12:05.72,Dialogue,,0000,0000,0000,,Tuy nhiên có thể chính là cậu ta. Mặc dù đó chỉ là linh cảm xấu của cháu.
Dialogue: 0,0:12:05.81,0:12:06.81,Dialogue,,0000,0000,0000,,Quả nhiên là thế...
Dialogue: 0,0:12:06.89,0:12:12.64,Dialogue,,0000,0000,0000,,Nếu là cậu ấy thì phải có một AS được trang bị Lambda Driver ở đâu đó cho cậu ta.
Dialogue: 0,0:12:14.94,0:12:16.77,Dialogue,,0000,0000,0000,,Gì thế...
Dialogue: 0,0:12:15.94,0:12:17.77,Dialogue,,0000,0000,0000,,Thuyền trưởng, hãy tránh xa cửa sổ !
Dialogue: 0,0:12:19.78,0:12:21.65,Dialogue,,0000,0000,0000,,Mục tiêu của họ là Takuma.
Dialogue: 0,0:12:21.74,0:12:23.36,Dialogue,,0000,0000,0000,,Chúng ta phải đưa cậu ta đi.
Dialogue: 0,0:12:23.45,0:12:25.37,Dialogue,,0000,0000,0000,,Tôi không đồng ý, thuyền trưởng.
Dialogue: 0,0:12:25.45,0:12:26.28,Dialogue,,0000,0000,0000,,Sao lại không?
Dialogue: 0,0:12:26.37,0:12:29.33,Dialogue,,0000,0000,0000,,Chúng ta chỉ có đủ người để bảo vệ cô.
Dialogue: 0,0:12:43.84,0:12:45.18,Dialogue,,0000,0000,0000,,Arm Slave ư?
Dialogue: 0,0:12:45.26,0:12:46.34,Dialogue,,0000,0000,0000,,Không thể nào!
Dialogue: 0,0:12:46.43,0:12:47.72,Dialogue,,0000,0000,0000,,Savage!
Dialogue: 0,0:13:01.44,0:13:02.74,Dialogue,,0000,0000,0000,,Thuyền trưởng!
Dialogue: 0,0:13:31.93,0:13:33.48,Dialogue,,0000,0000,0000,,Seina,Takuma đâu rồi?
Dialogue: 0,0:13:33.56,0:13:34.43,Dialogue,,0000,0000,0000,,Không có ở đây.
Dialogue: 0,0:13:34.52,0:13:35.44,Dialogue,,0000,0000,0000,,Không thể nào.
Dialogue: 0,0:13:35.52,0:13:37.06,Dialogue,,0000,0000,0000,,Có vẻ như cậu ta đã được đưa đi.
Dialogue: 0,0:13:37.15,0:13:39.31,Dialogue,,0000,0000,0000,,Cậu đang lần theo dấu máy phát tín hiệu chứ ?
Dialogue: 0,0:13:40.73,0:13:45.20,Dialogue,,0000,0000,0000,,Khốn kiếp! Mất tín hiệu rồi. Sẽ mất thời gian để tìm thấy cậu ta.
Dialogue: 0,0:13:45.28,0:13:47.66,Dialogue,,0000,0000,0000,,Tìm cậu ta ngay đi.
Dialogue: 0,0:13:47.74,0:13:51.66,Dialogue,,0000,0000,0000,,Chúng ta cần Takuma để điều khiển con quỷ đó.
Dialogue: 0,0:13:51.74,0:13:54.62,Dialogue,,0000,0000,0000,,Seina! Có một kẻ bị thương ở đây.
Dialogue: 0,0:13:54.71,0:13:56.50,Dialogue,,0000,0000,0000,,Nếu là binh lính thì giết hắn đi.
Dialogue: 0,0:13:56.58,0:13:58.21,Dialogue,,0000,0000,0000,,Nhưng ông ta là...
Dialogue: 0,0:14:05.42,0:14:07.93,Dialogue,,0000,0000,0000,,Ông ta dường như là người ngoài.
Dialogue: 0,0:14:08.01,0:14:10.18,Dialogue,,0000,0000,0000,,Chúng ta làm gì đây, Seina?
Dialogue: 0,0:14:13.97,0:14:16.64,Dialogue,,0000,0000,0000,,Ông là ai ?
Dialogue: 0,0:14:16.73,0:14:19.52,Dialogue,,0000,0000,0000,,Kẻ thù của cô.
Dialogue: 0,0:14:31.24,0:14:32.87,Dialogue,,0000,0000,0000,,Cậu định đi theo tớ bao lâu nữa ?
Dialogue: 0,0:14:32.95,0:14:38.21,Dialogue,,0000,0000,0000,,Tôi không có, chỉ là phòng tôi cũng ở hướng này.
Dialogue: 0,0:14:38.29,0:14:40.46,Dialogue,,0000,0000,0000,,Cái đó thì tớ biết rồi!
Dialogue: 0,0:14:41.59,0:14:44.25,Dialogue,,0000,0000,0000,,Tôi đã xin lỗi về việc không giữ lời hứa.
Dialogue: 0,0:14:44.34,0:14:47.59,Dialogue,,0000,0000,0000,,Và cô cũng đã nói là không giận nữa.
Dialogue: 0,0:14:47.68,0:14:52.64,Dialogue,,0000,0000,0000,,Vì lợi ích an toàn trong tương lai, chúng ta nên hòa giải mối quan hệ của mình.
Dialogue: 0,0:14:52.72,0:14:54.64,Dialogue,,0000,0000,0000,,Mối quan hệ của chúng ta?
Dialogue: 0,0:14:54.72,0:14:56.27,Dialogue,,0000,0000,0000,,Nó là kiểu quan hệ gì thế ?
Dialogue: 0,0:14:56.35,0:14:59.23,Dialogue,,0000,0000,0000,,Tớ và cậu chỉ là bạn cùng lớp.
Dialogue: 0,0:14:59.31,0:15:01.81,Dialogue,,0000,0000,0000,,Tôi có nhiệm vụ bảo vệ cô.
Dialogue: 0,0:15:01.90,0:15:03.73,Dialogue,,0000,0000,0000,,Nhiệm vụ?
Dialogue: 0,0:15:03.82,0:15:06.23,Dialogue,,0000,0000,0000,,Nhiệm vụ của cậu là quan trọng nhất.
Dialogue: 0,0:15:06.32,0:15:11.07,Dialogue,,0000,0000,0000,,Phải rồi, cậu là tên cuồng chiến tranh và công việc của cậu luôn được ưu tiên hàng đầu!
Dialogue: 0,0:15:12.95,0:15:15.33,Dialogue,,0000,0000,0000,,Tớ không bảo cậu phải thay đổi...
Dialogue: 0,0:15:15.41,0:15:19.96,Dialogue,,0000,0000,0000,,nhưng ít nhất làm điều gì đó liều lĩnh hoặc tự hại mình thì đi khuất mắt tớ.
Dialogue: 0,0:15:20.04,0:15:21.58,Dialogue,,0000,0000,0000,,Chidori...
Dialogue: 0,0:15:21.67,0:15:22.83,Dialogue,,0000,0000,0000,,Tớ...
Dialogue: 0,0:15:22.92,0:15:25.30,Dialogue,,0000,0000,0000,,Tớ rất ghét cậu!
Dialogue: 0,0:15:33.47,0:15:37.14,Dialogue,,0000,0000,0000,,Thiệt tình! Sao hắn ta không thể xin lỗi một cách bình thường ?
Dialogue: 0,0:15:37.22,0:15:38.81,Dialogue,,0000,0000,0000,,Tên ngốc này!
Dialogue: 0,0:15:45.90,0:15:47.86,Dialogue,,0000,0000,0000,,Vậy ai mới là kẻ ngốc đây?
Dialogue: 0,0:15:56.41,0:15:59.04,Dialogue,,0000,0000,0000,,Tớ rất ghét cậu!
Dialogue: 0,0:16:22.81,0:16:24.90,Dialogue,,0000,0000,0000,,Sagara-san?
Dialogue: 0,0:16:24.98,0:16:26.61,Dialogue,,0000,0000,0000,,Thật may quá.
Dialogue: 0,0:16:26.69,0:16:27.82,Dialogue,,0000,0000,0000,,Thuyền trưởng?
Dialogue: 0,0:16:27.90,0:16:30.99,Dialogue,,0000,0000,0000,,Nếu cậu là kẻ địch, tôi nghĩ là mình sẽ chết mất.
Dialogue: 0,0:16:31.07,0:16:33.45,Dialogue,,0000,0000,0000,,Tôi không giỏi trong việc sử dụng súng.
Dialogue: 0,0:16:33.53,0:16:35.78,Dialogue,,0000,0000,0000,,Đã xảy ra chuyện gì? Cậu ta là ai?
Dialogue: 0,0:16:35.87,0:16:37.74,Dialogue,,0000,0000,0000,,Đừng để cậu ta thoát!
Dialogue: 0,0:16:37.83,0:16:40.04,Dialogue,,0000,0000,0000,,Cậu ta là...
Dialogue: 0,0:16:51.01,0:16:52.76,Dialogue,,0000,0000,0000,,Nguy hiểm quá.
Dialogue: 0,0:16:52.84,0:16:55.80,Dialogue,,0000,0000,0000,,Tôi đoán là thuốc an thần đã hết tác dụng.
Dialogue: 0,0:16:58.43,0:16:59.22,Dialogue,,0000,0000,0000,,Mời cô.
Dialogue: 0,0:16:59.31,0:17:00.64,Dialogue,,0000,0000,0000,,Cám ơn.
Dialogue: 0,0:17:00.72,0:17:04.98,Dialogue,,0000,0000,0000,,Vậy là cô đã lấy xe ở cơ sở nghiên cứu và chạy thoát ?
Dialogue: 0,0:17:05.06,0:17:09.44,Dialogue,,0000,0000,0000,,Phải, đã có lần Melissa nói tôi biết về chỗ để chìa khóa.
Dialogue: 0,0:17:09.53,0:17:13.95,Dialogue,,0000,0000,0000,,Nhưng vì tôi quá chậm chạp nên chú Kalinin đã...
Dialogue: 0,0:17:14.03,0:17:16.24,Dialogue,,0000,0000,0000,,Tôi thật là tệ.
Dialogue: 0,0:17:16.32,0:17:19.53,Dialogue,,0000,0000,0000,,Một khi lên bờ thì tôi thật vô dụng.
Dialogue: 0,0:17:19.62,0:17:23.16,Dialogue,,0000,0000,0000,,Không phải thế. Cô đã làm những gì cần thiết.
Dialogue: 0,0:17:23.25,0:17:26.12,Dialogue,,0000,0000,0000,,Và không thể nói là ông ấy đã chết.
Dialogue: 0,0:17:26.21,0:17:27.92,Dialogue,,0000,0000,0000,,Ông ấy chắc chắn vẫn còn sống.
Dialogue: 0,0:17:28.00,0:17:28.79,Dialogue,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:17:28.84,0:17:32.92,Dialogue,,0000,0000,0000,,Lần đầu tiên tôi gặp ông ta, chúng tôi là kẻ địch.
Dialogue: 0,0:17:33.01,0:17:36.93,Dialogue,,0000,0000,0000,,Tôi chưa bao giờ phải chiến đấu khó khăn đến như thế.
Dialogue: 0,0:17:37.01,0:17:38.68,Dialogue,,0000,0000,0000,,Kẻ địch ?
Dialogue: 0,0:17:38.76,0:17:42.89,Dialogue,,0000,0000,0000,,Tôi khẳng định là cực kỳ khó để giết ông ấy.
Dialogue: 0,0:17:45.94,0:17:47.85,Dialogue,,0000,0000,0000,,Thật là một cách an ủi kỳ lạ.
Dialogue: 0,0:17:47.94,0:17:49.65,Dialogue,,0000,0000,0000,,Cô nghĩ thế à?
Dialogue: 0,0:17:49.73,0:17:52.65,Dialogue,,0000,0000,0000,,Cậu giống như Melissa đã mô tả.
Dialogue: 0,0:17:55.99,0:18:00.91,Dialogue,,0000,0000,0000,,Trước đây chúng ta chưa từng nói chuyện như thế này.
Dialogue: 0,0:18:00.99,0:18:05.04,Dialogue,,0000,0000,0000,,Cậu có biết là chúng ta bằng tuổi nhau không ?
Dialogue: 0,0:18:05.12,0:18:08.17,Dialogue,,0000,0000,0000,,Vâng, tôi biết.
Dialogue: 0,0:18:08.25,0:18:12.92,Dialogue,,0000,0000,0000,,Nếu chúng ta đi tản bộ tay trong tay thì chúng ta rất giống một cặp tình nhân đấy.
Dialogue: 0,0:18:14.92,0:18:17.52,Dialogue,,0000,0000,0000,,Vâng, thưa thuyền trưởng. Tôi lấy làm vinh hạnh.
Dialogue: 0,0:18:18.00,0:18:20.30,Dialogue,,0000,0000,0000,,Xin hãy thư giãn khi chúng ta nói chuyện về những việc thế này.
Dialogue: 0,0:18:20.39,0:18:23.72,Dialogue,,0000,0000,0000,,Tôi không biết làm sao khi cậu nói chuyện nghiêm thế này.
Dialogue: 0,0:18:23.81,0:18:25.35,Dialogue,,0000,0000,0000,,Rõ.
Dialogue: 0,0:18:25.43,0:18:27.69,Dialogue,,0000,0000,0000,,Đây không phải là mệnh lệnh.
Dialogue: 0,0:18:27.77,0:18:30.81,Dialogue,,0000,0000,0000,,Xin hãy xem nó như yêu cầu của một người bạn.
Dialogue: 0,0:18:30.90,0:18:33.11,Dialogue,,0000,0000,0000,,Vâng, nếu đó là lệnh của cô.
Dialogue: 0,0:18:36.20,0:18:39.99,Dialogue,,0000,0000,0000,,Ano... tôi có thể sử dụng phòng tắm của cậu không ?
Dialogue: 0,0:18:56.84,0:18:58.76,Dialogue,,0000,0000,0000,,Tập trung nào, tập trung...
Dialogue: 0,0:18:58.84,0:19:01.47,Dialogue,,0000,0000,0000,,Đây là Uruz 7. Liên lạc khẩn cấp...
Dialogue: 0,0:19:06.81,0:19:08.27,Dialogue,,0000,0000,0000,,Cậu đói không ?
Dialogue: 0,0:19:08.35,0:19:09.73,Dialogue,,0000,0000,0000,,Không.
Dialogue: 0,0:19:09.81,0:19:11.81,Dialogue,,0000,0000,0000,,Tôi đoán là cậu hiểu ngôn ngữ này.
Dialogue: 0,0:19:11.90,0:19:15.82,Dialogue,,0000,0000,0000,,Dĩ nhiên rồi, Ngài Sagara Sousuke.
Dialogue: 0,0:19:27.45,0:19:29.08,Dialogue,,0000,0000,0000,,Chidori, có chuyện gì thế?
Dialogue: 0,0:19:29.16,0:19:33.08,Dialogue,,0000,0000,0000,,Về việc xảy ra lúc nãy...
Dialogue: 0,0:19:33.17,0:19:36.59,Dialogue,,0000,0000,0000,,Tớ...cậu biết đấy? Đôi khi tớ cũng hay bướng bỉnh.
Dialogue: 0,0:19:36.67,0:19:39.84,Dialogue,,0000,0000,0000,,Vì thế, nên tớ...muốn nói...
Dialogue: 0,0:19:41.39,0:19:43.18,Dialogue,,0000,0000,0000,,Tớ xin lỗi.
Dialogue: 0,0:19:44.60,0:19:48.06,Dialogue,,0000,0000,0000,,Không, vì tôi lúc nào cũng gây rắc rối cho cô cả.
Dialogue: 0,0:19:48.14,0:19:50.69,Dialogue,,0000,0000,0000,,Cho nên tôi mới là người phải xin lỗi.
Dialogue: 0,0:19:50.77,0:19:52.31,Dialogue,,0000,0000,0000,,Cậu sẽ tha thứ cho tớ chứ?
Dialogue: 0,0:19:52.40,0:19:55.48,Dialogue,,0000,0000,0000,,Có gì mà phải tha thứ, đó là lỗi của tôi.
Dialogue: 0,0:19:55.57,0:19:56.82,Dialogue,,0000,0000,0000,,Thật chứ?
Dialogue: 0,0:19:57.00,0:19:58.82,Dialogue,,0000,0000,0000,,Cám ơn cậu !
Dialogue: 0,0:19:58.90,0:20:03.87,Dialogue,,0000,0000,0000,,Tớ đã mang đến thức ăn còn sót lại của ngày hôm qua. Cậu sẽ ăn chứ?
Dialogue: 0,0:20:03.95,0:20:06.41,Dialogue,,0000,0000,0000,,Tớ vào nhà bếp được không? Tớ sẽ hâm nóng nó lại cho cậu.
Dialogue: 0,0:20:06.49,0:20:07.58,Dialogue,,0000,0000,0000,,Việc đó...
Dialogue: 0,0:20:07.66,0:20:09.08,Dialogue,,0000,0000,0000,,Cậu đã ăn tối rồi à ?
Dialogue: 0,0:20:09.16,0:20:11.00,Dialogue,,0000,0000,0000,,Không, tôi chưa ăn, nhưng mà...
Dialogue: 0,0:20:11.08,0:20:14.46,Dialogue,,0000,0000,0000,,Vậy thì chúng ta cùng ăn đi. Tớ vào được không ?
Dialogue: 0,0:20:15.04,0:20:18.59,Dialogue,,0000,0000,0000,,Không, tôi cảm kích lòng tốt của cô, nhưng mà...
Dialogue: 0,0:20:18.67,0:20:21.97,Dialogue,,0000,0000,0000,,Vào lúc này tôi đang ở trong một tình huống cực kỳ phức tạp.
Dialogue: 0,0:20:22.05,0:20:25.64,Dialogue,,0000,0000,0000,,Đó là vấn đề mà phải mất một khoảng thời gian để giải thích cho cô hiểu.
Dialogue: 0,0:20:25.72,0:20:29.89,Dialogue,,0000,0000,0000,,Tôi không chắc là cô có thể hiểu nó.
Dialogue: 0,0:20:29.98,0:20:31.93,Dialogue,,0000,0000,0000,,Cậu đang nói về cái gì thế?
Dialogue: 0,0:20:35.73,0:20:37.11,Dialogue,,0000,0000,0000,,Saraga-san...
Dialogue: 0,0:20:37.19,0:20:40.32,Dialogue,,0000,0000,0000,,Ano...cậu cho tôi mượn áo thun được không ?
Dialogue: 0,0:21:13.23,0:21:24.95,Songs (Romanji),,0000,0000,0000,,Kokoro ni chiisana hana ga saiteru
Dialogue: 0,0:21:25.03,0:21:36.12,Songs (Romanji),,0000,0000,0000,,Kimi kara moratta karenai hana ga
Dialogue: 0,0:21:36.21,0:21:42.13,Songs (Romanji),,0000,0000,0000,,Shinjiru koto mo kowagaranai kurai
Dialogue: 0,0:21:42.21,0:21:49.43,Songs (Romanji),,0000,0000,0000,,Tsuyoku nareta kara
Dialogue: 0,0:21:49.51,0:21:55.18,Songs (Romanji),,0000,0000,0000,,Kimi ni aete ureshikatta
Dialogue: 0,0:21:55.27,0:22:01.82,Songs (Romanji),,0000,0000,0000,,Tsunaida te ga hokoridatta
Dialogue: 0,0:22:01.90,0:22:08.49,Songs (Romanji),,0000,0000,0000,,Ima wa betsubetsu no sora miagete itemo
Dialogue: 0,0:22:08.57,0:22:17.16,Songs (Romanji),,0000,0000,0000,,Hora arukeru hitori demo
Dialogue: 0,0:21:13.23,0:21:24.95,Songs,,0000,0000,0000,,Bông hoa nhỏ trong tim em
Dialogue: 0,0:21:25.03,0:21:36.12,Songs,,0000,0000,0000,,Bông hoa không bao giờ tàn mà anh đã tặng em
Dialogue: 0,0:21:36.21,0:21:42.13,Songs,,0000,0000,0000,,Em không hề sợ hãi, thậm chí luôn tin tưởng
Dialogue: 0,0:21:42.21,0:21:49.43,Songs,,0000,0000,0000,,Đó là điều khiến em trở nên mạnh mẽ
Dialogue: 0,0:21:49.51,0:21:55.18,Songs,,0000,0000,0000,,Em rất hạnh phúc vì đã gặp anh
Dialogue: 0,0:21:55.27,0:22:01.82,Songs,,0000,0000,0000,,Em tự hào khi nắm tay anh
Dialogue: 0,0:22:01.90,0:22:08.49,Songs,,0000,0000,0000,,Dù cho hai ta hướng về bầu trời khác nhau
Dialogue: 0,0:22:08.57,0:22:17.16,Songs,,0000,0000,0000,,Anh thấy không, em có thể tự mình bước đi
Dialogue: 0,0:22:25.85,0:22:30.23,Dialogue,,0000,0000,0000,,"Bộ phim này hoàn toàn là hư cấu.\N Tên nhân vật và các tổ chức trong phim không liên quan đến bất cứ cá nhân / tổ chức nào."
Dialogue: 0,0:22:30.80,0:22:34.77,Dialogue,,0000,0000,0000,,Tôi rất vui khi được ở bên cạnh Sagara-san.
Dialogue: 0,0:22:34.85,0:22:37.98,Dialogue,,0000,0000,0000,,Ôi không! Mình đang nói gì vào lúc này thế ?
Dialogue: 0,0:22:38.06,0:22:42.15,Dialogue,,0000,0000,0000,,Full Metal Panic: tập 10, "Chạy, chạy đi."
Dialogue: 0,0:22:42.23,0:22:44.82,Dialogue,,0000,0000,0000,,Tôi có phải là gánh nặng cho cậu ?
Dialogue: 0,0:22:44.90,0:22:47.19,Dialogue,,0000,0000,0000,,Không thành vấn đề, thuyền trưởng.
