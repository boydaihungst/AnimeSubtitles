Dialogue: 0,0:00:16.51,0:00:23.77,Songs (Romanji),,0000,0000,0000,,Futari de nigebasho sagashite
Dialogue: 0,0:00:23.85,0:00:31.40,Songs (Romanji),,0000,0000,0000,,Hashitta tenki ame no naka
Dialogue: 0,0:00:31.49,0:00:38.83,Songs (Romanji),,0000,0000,0000,,Tatoeba nanika wo ushinau toshite mo
Dialogue: 0,0:00:38.91,0:00:47.67,Songs (Romanji),,0000,0000,0000,,Mamotte ikanakya hitotsu dake wa
Dialogue: 0,0:00:47.75,0:00:54.80,Songs (Romanji),,0000,0000,0000,,Kono sekai ni umareta sono imi wo
Dialogue: 0,0:00:54.88,0:01:00.43,Songs (Romanji),,0000,0000,0000,,Kimi to mitsuke ni yukou
Dialogue: 0,0:01:00.52,0:01:05.64,Songs (Romanji),,0000,0000,0000,,Itami sae mo kakaenagara
Dialogue: 0,0:01:05.73,0:01:12.53,Songs (Romanji),,0000,0000,0000,,Atarashii keshiki mukae ni yukou
Dialogue: 0,0:00:16.51,0:00:23.77,Songs,,0000,0000,0000,,Hai chúng ta đang tìm một nơi để trốn thoát
Dialogue: 0,0:00:23.85,0:00:31.40,Songs,,0000,0000,0000,,Cùng chạy dưới ánh nắng chói chang
Dialogue: 0,0:00:31.49,0:00:38.83,Songs,,0000,0000,0000,,Ngay cả khi em mất một điều gì khác
Dialogue: 0,0:00:38.91,0:00:47.67,Songs,,0000,0000,0000,,Thì em chỉ muốn giữ lấy một điều duy nhất
Dialogue: 0,0:00:47.75,0:00:54.80,Songs,,0000,0000,0000,,Ý nghĩa khi được sinh ra ở thế giới này
Dialogue: 0,0:00:54.88,0:01:00.43,Songs,,0000,0000,0000,,Hãy đi cùng em và tìm hiểu
Dialogue: 0,0:01:00.52,0:01:05.64,Songs,,0000,0000,0000,,Giữ chặt lấy nó, dù cho là nỗi đau
Dialogue: 0,0:01:05.73,0:01:12.53,Songs,,0000,0000,0000,,Cùng tiến lên đón chào thế giới mới
Dialogue: 0,0:01:15.53,0:01:19.88,Dialogue,,0000,0000,0000,,Translator: MaHiME
Dialogue: 0,0:01:23.88,0:01:29.88,Dialogue,,0000,0000,0000,,Waya fansub presents
Dialogue: 0,0:01:49.06,0:01:51.94,Dialogue,,0000,0000,0000,,Cậu sẽ không sao chứ, Sousuke?
Dialogue: 0,0:01:55.74,0:01:57.55,Dialogue,,0000,0000,0000,,"Sự thức tỉnh của Behemoth."
Dialogue: 0,0:02:15.55,0:02:18.26,Dialogue,,0000,0000,0000,,Chidori! Thuyền trưởng!
Dialogue: 0,0:02:24.18,0:02:27.85,Dialogue,,0000,0000,0000,,Trễ quá. Phải chi họ đến sớm hơn 10 phút.
Dialogue: 0,0:02:27.94,0:02:31.86,Dialogue,,0000,0000,0000,,Geybo 9 gọi Uruz 7, hàng đã đến.
Dialogue: 0,0:02:31.94,0:02:33.98,Dialogue,,0000,0000,0000,,Uruz 7, nghe rõ.
Dialogue: 0,0:02:44.83,0:02:47.79,Dialogue,,0000,0000,0000,,Vậy, những cô gái dễ thương đâu rồi ?
Dialogue: 0,0:03:01.01,0:03:02.80,Dialogue,,0000,0000,0000,,Ông thấy sao rồi ?
Dialogue: 0,0:03:02.89,0:03:05.01,Dialogue,,0000,0000,0000,,Trông tôi có vẻ khỏe lắm à ?
Dialogue: 0,0:03:05.10,0:03:07.35,Dialogue,,0000,0000,0000,,Chắc chưa đến nỗi chết đâu nhỉ.
Dialogue: 0,0:03:07.43,0:03:11.31,Dialogue,,0000,0000,0000,,Ông trông có vẻ lịch sự nhưng rất cứng cỏi.
Dialogue: 0,0:03:11.40,0:03:12.90,Dialogue,,0000,0000,0000,,Đúng đấy.
Dialogue: 0,0:03:12.98,0:03:17.57,Dialogue,,0000,0000,0000,,Tôi đủ cứng cỏi để không phải cúi mình như Takechi đó.
Dialogue: 0,0:03:20.70,0:03:22.95,Dialogue,,0000,0000,0000,,Ông ám chỉ ông ấy là kẻ nhu nhược ?
Dialogue: 0,0:03:23.03,0:03:26.08,Dialogue,,0000,0000,0000,,Tùy cô thôi.
Dialogue: 0,0:03:26.16,0:03:30.58,Dialogue,,0000,0000,0000,,Chủ nhân của cô, Takechi Seiji, chỉ tồn tại bên trong cô.
Dialogue: 0,0:03:30.67,0:03:34.04,Dialogue,,0000,0000,0000,,Hành động của cô đang đi ngược lại với chân lý của ông ta.
Dialogue: 0,0:03:34.13,0:03:35.79,Dialogue,,0000,0000,0000,,Chỉ thế thôi.
Dialogue: 0,0:03:37.84,0:03:42.09,Dialogue,,0000,0000,0000,,Ông thật kỳ lạ. Ông giống như một giáo sĩ hơn là một chiến binh.
Dialogue: 0,0:03:42.18,0:03:44.85,Dialogue,,0000,0000,0000,,Nếu ông mang theo cuốn kinh thánh thì sẽ hợp lắm đấy.
Dialogue: 0,0:03:44.93,0:03:47.97,Dialogue,,0000,0000,0000,,Đó là một công việc hấp dẫn để đổi sang.
Dialogue: 0,0:03:48.06,0:03:49.18,Dialogue,,0000,0000,0000,,Tệ thật đấy.
Dialogue: 0,0:03:49.27,0:03:50.52,Dialogue,,0000,0000,0000,,Sao ?
Dialogue: 0,0:03:50.60,0:03:52.69,Dialogue,,0000,0000,0000,,Ước gì tôi gặp ông sớm hơn.
Dialogue: 0,0:03:52.77,0:03:54.44,Dialogue,,0000,0000,0000,,Bây giờ vẫn còn kịp.
Dialogue: 0,0:03:54.52,0:03:58.78,Dialogue,,0000,0000,0000,,Không, ngay từ đầu ông đã là kẻ địch của tôi.
Dialogue: 0,0:03:58.86,0:04:01.36,Dialogue,,0000,0000,0000,,Lý do duy nhất mà tôi không giết ông chỉ đơn thuần là ý nghĩ kì quặc của tôi.
Dialogue: 0,0:04:01.45,0:04:06.91,Dialogue,,0000,0000,0000,,Một khi tôi đã xác định ông biết được bao nhiêu về Lambda Driver thì ông không còn giá trị nữa.
Dialogue: 0,0:04:06.99,0:04:08.99,Dialogue,,0000,0000,0000,,Tôi sẽ không tiết lộ gì cả.
Dialogue: 0,0:04:09.08,0:04:10.04,Dialogue,,0000,0000,0000,,Thế thì...
Dialogue: 0,0:04:10.12,0:04:16.54,Dialogue,,0000,0000,0000,,Tôi sẽ tra khảo Chidori Kaname và Teletha Testarossa trước mặt ông.
Dialogue: 0,0:04:25.05,0:04:26.93,Dialogue,,0000,0000,0000,,Oy, oy... Đó là phá hoại tài sản đấy.
Dialogue: 0,0:04:27.01,0:04:31.39,Dialogue,,0000,0000,0000,,{\i1}Ai nói thế ? Còn chiếc xe tải nhỏ đó thì sao ?{\i0}
Dialogue: 0,0:04:29.01,0:04:31.39,Dialogue,,0000,0000,0000,,Đừng nói nữa!
Dialogue: 0,0:04:31.48,0:04:33.85,Dialogue,,0000,0000,0000,,Nếu bà chị nói về nó thì nên gọi là đồ mượn tạm.
Dialogue: 0,0:04:33.94,0:04:37.73,Dialogue,,0000,0000,0000,,{\i1}Đừng phá hỏng nó đấy. Tôi còn phải trả nó về nữa.{\i0}
Dialogue: 0,0:04:37.82,0:04:41.23,Dialogue,,0000,0000,0000,,Sao Tokyo lại có nhiều bảng hướng dẫn thế này?
Dialogue: 0,0:04:41.32,0:04:44.74,Dialogue,,0000,0000,0000,,Vẫn đỡ hơn Hong Kong.
Dialogue: 0,0:04:44.82,0:04:49.95,Dialogue,,0000,0000,0000,,Nếu tôi mà được lệnh lái M9 ở đó, tôi sẽ chạy ngay.
Dialogue: 0,0:04:50.04,0:04:52.41,Dialogue,,0000,0000,0000,,Tôi có thể đã quá ngu ngốc.
Dialogue: 0,0:04:52.50,0:04:55.21,Dialogue,,0000,0000,0000,,Cậu đang nói về việc thả Tessa trước à?
Dialogue: 0,0:04:55.29,0:04:57.75,Dialogue,,0000,0000,0000,,Thế thì đúng, cậu là một thằng ngốc.
Dialogue: 0,0:04:57.84,0:05:00.67,Dialogue,,0000,0000,0000,,Thật khó chịu khi cậu nói điều đó với tôi.
Dialogue: 0,0:05:00.76,0:05:03.01,Dialogue,,0000,0000,0000,,Nếu như cậu ở trong trường hợp đó, cậu sẽ thả ai trước ?
Dialogue: 0,0:05:03.09,0:05:07.09,Dialogue,,0000,0000,0000,,Để xem nào. Tôi nghĩ rằng tôi sẽ thả người con gái tôi yêu trước...
Dialogue: 0,0:05:07.18,0:05:11.31,Dialogue,,0000,0000,0000,,người mà chấp nhận hơi ấm tình yêu của tôi.
Dialogue: 0,0:05:11.39,0:05:13.18,Dialogue,,0000,0000,0000,,Điều đó là quan trọng nhất.
Dialogue: 0,0:05:13.27,0:05:16.65,Dialogue,,0000,0000,0000,,Vô lý. Nó không phải là vấn đề yêu hay không.
Dialogue: 0,0:05:16.73,0:05:19.07,Dialogue,,0000,0000,0000,,Tôi đã suy nghĩ về một biện pháp hiệu quả hơn.
Dialogue: 0,0:05:18.73,0:05:21.07,Dialogue,,0000,0000,0000,,Đó là lý do vì sao cậu là thằng ngốc.
Dialogue: 0,0:05:21.15,0:05:24.32,Dialogue,,0000,0000,0000,,Cậu nên làm theo bản năng của mình trong tình huống đó.
Dialogue: 0,0:05:24.40,0:05:26.91,Dialogue,,0000,0000,0000,,Tình yêu không phải là thứ mà cậu có thể suy tính.
Dialogue: 0,0:05:26.99,0:05:28.20,Dialogue,,0000,0000,0000,,Tôi không muốn bàn đến nó nữa.
Dialogue: 0,0:05:28.28,0:05:30.28,Dialogue,,0000,0000,0000,,{\i1}Này, các cậu kia!{\i0}
Dialogue: 0,0:05:30.37,0:05:31.83,Dialogue,,0000,0000,0000,,Chúng ta không có thời gian đâu!
Dialogue: 0,0:05:31.91,0:05:35.12,Dialogue,,0000,0000,0000,,Sao các cậu không tính xem đường nào ngắn nhất đến cảng Aomi?
Dialogue: 0,0:05:35.21,0:05:38.79,Dialogue,,0000,0000,0000,,Tin tức này có tin được không thế?
Dialogue: 0,0:05:38.88,0:05:42.13,Dialogue,,0000,0000,0000,,Tàu "De Danaan" đã thâm nhập vào hệ thống Orbis tại Sở cảnh sát đô thị.
Dialogue: 0,0:05:42.21,0:05:46.47,Dialogue,,0000,0000,0000,,Có một chiếc xe có vẻ như đã được dọn sẵn đường đang tiến thẳng đến cảng Aomi.
Dialogue: 0,0:05:46.55,0:05:50.18,Dialogue,,0000,0000,0000,,Tôi đã cho Chidori đeo vòng tay có gắn máy phát tín hiệu.
Dialogue: 0,0:05:50.26,0:05:53.35,Dialogue,,0000,0000,0000,,Khi đến đó chúng ta sẽ xác định được cô ấy ở đâu.
Dialogue: 0,0:05:53.43,0:05:56.27,Dialogue,,0000,0000,0000,,Rồi, rồi. Mở ngăn đựng bao tay ra.
Dialogue: 0,0:05:56.35,0:05:58.31,Dialogue,,0000,0000,0000,,Cậu sẽ phải tìm Mapple đấy.
Dialogue: 0,0:06:01.23,0:06:04.19,Dialogue,,0000,0000,0000,,{\i1}Tất cả cảnh sát khu vực nghe rõ.{\i0}
Dialogue: 0,0:06:04.28,0:06:07.07,Dialogue,,0000,0000,0000,,{\i1}Đây là đơn vị điều tra tội phạm trên mạng của Sở cảnh sát đô thị.{\i0}
Dialogue: 0,0:06:07.16,0:06:12.08,Dialogue,,0000,0000,0000,,{\i1}Lúc 22:52 giờ hôm nay, chúng tôi xác nhận có cuộc tấn công mạng vào hệ thống Orbis.{\i0}
Dialogue: 0,0:06:12.16,0:06:15.29,Dialogue,,0000,0000,0000,,{\i1}Tên hacker đã đánh dấu cụ thể một chiếc xe.{\i0}
Dialogue: 0,0:06:15.37,0:06:17.04,Dialogue,,0000,0000,0000,,{\i1}Chiếc xe có liên quan là...{\i0}
Dialogue: 0,0:06:36.77,0:06:39.64,Dialogue,,0000,0000,0000,,Nee-san, em đã phải trải qua khoảng thời gian khủng khiếp.
Dialogue: 0,0:06:43.19,0:06:44.94,Dialogue,,0000,0000,0000,,Nee-san?
Dialogue: 0,0:06:45.03,0:06:47.86,Dialogue,,0000,0000,0000,,Tại sao em không uống thuốc của mình trên máy bay?
Dialogue: 0,0:06:47.95,0:06:50.66,Dialogue,,0000,0000,0000,,Em xin lỗi. Em lỡ làm rớt nó trong nhà vệ sinh.
Dialogue: 0,0:06:50.74,0:06:53.91,Dialogue,,0000,0000,0000,,Nó đã bẩn rồi nên em ném chúng đi.
Dialogue: 0,0:06:53.99,0:06:56.24,Dialogue,,0000,0000,0000,,Chỉ vì vậy mà em đã bị bắt...
Dialogue: 0,0:06:56.33,0:06:59.21,Dialogue,,0000,0000,0000,,Và chúng ta phải tốn nhiều thời gian và công sức để đưa em về đây.
Dialogue: 0,0:06:59.29,0:07:03.17,Dialogue,,0000,0000,0000,,Nhưng chúng thật sự rất bẩn.
Dialogue: 0,0:07:03.25,0:07:06.05,Dialogue,,0000,0000,0000,,Em cần phải cứng cỏi hơn.
Dialogue: 0,0:07:06.13,0:07:07.84,Dialogue,,0000,0000,0000,,Em xin lỗi.
Dialogue: 0,0:07:10.01,0:07:13.55,Dialogue,,0000,0000,0000,,Nhưng mà chị mừng lắm. Chị đã rất lo lắng cho em.
Dialogue: 0,0:07:13.64,0:07:15.22,Dialogue,,0000,0000,0000,,Nee-san...
Dialogue: 0,0:07:24.40,0:07:27.11,Dialogue,,0000,0000,0000,,Này ! Không còn đường nào khác sao ?
Dialogue: 0,0:07:27.19,0:07:28.36,Dialogue,,0000,0000,0000,,Đường này là ngắn nhất.
Dialogue: 0,0:07:28.44,0:07:31.40,Dialogue,,0000,0000,0000,,Chúng ta sẽ phải mất thêm 25 phút nếu như đi qua Ariake.
Dialogue: 0,0:07:31.49,0:07:36.28,Dialogue,,0000,0000,0000,,Nếu đi qua Ginza, bà chị sẽ dẫm nát vài chiếc taxi đang chờ khách xung quanh nhà hát Kabuki.
Dialogue: 0,0:07:37.83,0:07:39.00,Dialogue,,0000,0000,0000,,Chidori-san...
Dialogue: 0,0:07:39.08,0:07:40.00,Dialogue,,0000,0000,0000,,Sao ?
Dialogue: 0,0:07:40.08,0:07:45.29,Dialogue,,0000,0000,0000,,Tớ đã hành động một cách kỳ lạ mỗi khi ở bên cậu.
Dialogue: 0,0:07:45.38,0:07:51.72,Dialogue,,0000,0000,0000,,Tớ đã phạm những sai lầm ngớ ngẩn mà bình thường tớ không bao giờ mắc phải.
Dialogue: 0,0:07:51.80,0:07:54.30,Dialogue,,0000,0000,0000,,Như là, tớ đã cố làm khó cậu ấy bằng cách làm điều gì đó ích kỷ.
Dialogue: 0,0:07:54.39,0:07:57.06,Dialogue,,0000,0000,0000,,Cũng như tớ đã cố thể hiện khả năng hành động một cách vô dụng.
Dialogue: 0,0:07:57.14,0:07:59.81,Dialogue,,0000,0000,0000,,Khả năng hành động? Ý cậu là sao ?
Dialogue: 0,0:07:59.89,0:08:06.19,Dialogue,,0000,0000,0000,,Tớ đã lao ra sân trường, bất chấp mệnh lệnh của trung sĩ Sagara.
Dialogue: 0,0:08:06.27,0:08:11.49,Dialogue,,0000,0000,0000,,Tớ chưa bao giờ có lựa chọn ngớ ngẩn như thế trong đời mình.
Dialogue: 0,0:08:11.57,0:08:18.29,Dialogue,,0000,0000,0000,,Tớ trở nên ngu ngốc khi cố gắng cứu cậu.
Dialogue: 0,0:08:18.37,0:08:20.25,Dialogue,,0000,0000,0000,,Thế à ? Tại sao ?
Dialogue: 0,0:08:20.33,0:08:22.41,Dialogue,,0000,0000,0000,,Bởi vì...
Dialogue: 0,0:08:22.50,0:08:25.58,Dialogue,,0000,0000,0000,,Mà này, cậu không sợ à ?
Dialogue: 0,0:08:25.67,0:08:30.26,Dialogue,,0000,0000,0000,,Cũng không hẳn. Dĩ nhiên là tớ sợ, nhưng mà...
Dialogue: 0,0:08:30.34,0:08:34.43,Dialogue,,0000,0000,0000,,Bằng cách nào đó, tớ muốn chống lại những thứ đe dọa trước mắt mình.
Dialogue: 0,0:08:34.51,0:08:35.47,Dialogue,,0000,0000,0000,,Chống lại à?
Dialogue: 0,0:08:35.55,0:08:45.35,Dialogue,,0000,0000,0000,,Phải, nó có thể gọi là kẻ địch, một cái gì đó cố tấn công mình, không hẳn chỉ là những kẻ cầm súng.
Dialogue: 0,0:08:45.44,0:08:48.82,Dialogue,,0000,0000,0000,,Kể cả khi cậu sống cuộc sống bình thường thì cậu vẫn có kẻ thù, phải không?
Dialogue: 0,0:08:48.90,0:08:53.40,Dialogue,,0000,0000,0000,,Nếu như cậu có kẻ thù như thế thì cậu phải làm một cái gì đó.
Dialogue: 0,0:08:53.49,0:08:56.99,Dialogue,,0000,0000,0000,,Tớ đoán rằng tớ sẽ làm như thế.
Dialogue: 0,0:08:57.07,0:08:59.33,Dialogue,,0000,0000,0000,,Thế à ?
Dialogue: 0,0:08:59.41,0:09:01.08,Dialogue,,0000,0000,0000,,Thế đấy.
Dialogue: 0,0:09:05.92,0:09:08.34,Dialogue,,0000,0000,0000,,Có trạm kiểm soát ở đây à!
Dialogue: 0,0:09:08.42,0:09:10.55,Dialogue,,0000,0000,0000,,Chúng ta làm gì đây?
Dialogue: 0,0:09:09.42,0:09:11.55,Dialogue,,0000,0000,0000,,{\i1}Vượt qua đi! Tôi sẽ bước qua nó.{\i0}
Dialogue: 0,0:09:11.63,0:09:14.22,Dialogue,,0000,0000,0000,,Dừng lại! Đừng làm thế!
Dialogue: 0,0:09:17.80,0:09:19.22,Dialogue,,0000,0000,0000,,Này, đứng lại!
Dialogue: 0,0:09:22.64,0:09:24.06,Dialogue,,0000,0000,0000,,Cắt đuôi họ được không?
Dialogue: 0,0:09:24.64,0:09:26.06,Dialogue,,0000,0000,0000,,Hỏi đống sắt này nè!
Dialogue: 0,0:09:26.15,0:09:28.23,Dialogue,,0000,0000,0000,,Đây là Aomi PC6.
Dialogue: 0,0:09:28.31,0:09:31.11,Dialogue,,0000,0000,0000,,Chúng tôi đang đuổi theo 1 chiếc xe tải nhỏ đã chạy xuyên qua trạm kiểm soát.
Dialogue: 0,0:09:31.19,0:09:33.78,Dialogue,,0000,0000,0000,,Đây là bộ chỉ huy. Nghe rõ.
Dialogue: 0,0:09:35.53,0:09:38.49,Dialogue,,0000,0000,0000,,Nó xảy ra khi tớ đang học cấp 2.
Dialogue: 0,0:09:38.57,0:09:40.95,Dialogue,,0000,0000,0000,,Đó là lúc tớ vừa trở về từ nước ngoài.
Dialogue: 0,0:09:41.04,0:09:42.95,Dialogue,,0000,0000,0000,,Tớ đã tức giận, có lẽ là vì...
Dialogue: 0,0:09:43.04,0:09:46.67,Dialogue,,0000,0000,0000,,Tớ đã bị bắt phải nói bất cứ điều gì hiện ra trong tâm trí mình.
Dialogue: 0,0:09:46.75,0:09:51.00,Dialogue,,0000,0000,0000,,Tớ đã nghĩ đó cũng là lỗi của mình nhưng mà nó đã rất tệ.
Dialogue: 0,0:09:51.09,0:09:54.17,Dialogue,,0000,0000,0000,,Chúng rất xảo quyệt và hèn hạ.
Dialogue: 0,0:09:54.26,0:09:57.38,Dialogue,,0000,0000,0000,,Nó khủng khiếp đến mức làm cho tớ đã có ý định tự sát.
Dialogue: 0,0:09:57.47,0:09:59.97,Dialogue,,0000,0000,0000,,Cậu cũng đã chống lại bọn chúng à ?
Dialogue: 0,0:10:00.05,0:10:01.35,Dialogue,,0000,0000,0000,,Phải.
Dialogue: 0,0:10:01.43,0:10:04.81,Dialogue,,0000,0000,0000,,Mà, khi tớ bắt đầu vào trường cao trung, những vấn đề đó đã biến mất.
Dialogue: 0,0:10:04.89,0:10:10.44,Dialogue,,0000,0000,0000,,Miễn sao Sousuke không gây rối nữa thì tớ không có phàn nàn gì.
Dialogue: 0,0:10:10.52,0:10:13.32,Dialogue,,0000,0000,0000,,Sagara-san làm phiền cậu nhiều vậy à?
Dialogue: 0,0:10:13.40,0:10:15.65,Dialogue,,0000,0000,0000,,Cậu ta tệ lắm.
Dialogue: 0,0:10:15.74,0:10:20.12,Dialogue,,0000,0000,0000,,Bởi vì cậu ta không có những cảm nhận thông thường nên toàn gây ra những vụ rắc rối.
Dialogue: 0,0:10:20.20,0:10:22.33,Dialogue,,0000,0000,0000,,Tớ biết là cậu ta không cố ý.
Dialogue: 0,0:10:22.41,0:10:24.83,Dialogue,,0000,0000,0000,,Điều đó làm mọi thứ trở nên tệ hơn.
Dialogue: 0,0:10:24.91,0:10:27.21,Dialogue,,0000,0000,0000,,Cậu ta vụng về nhưng luôn cố gắng.
Dialogue: 0,0:10:27.29,0:10:29.58,Dialogue,,0000,0000,0000,,Tớ không thể bỏ rơi cậu ta được.
Dialogue: 0,0:10:29.67,0:10:32.84,Dialogue,,0000,0000,0000,,Quả nhiên là anh ấy rất kỳ lạ nhỉ.
Dialogue: 0,0:10:32.92,0:10:35.46,Dialogue,,0000,0000,0000,,Phải đấy, cậu ta rất kỳ lạ.
Dialogue: 0,0:10:39.18,0:10:41.76,Dialogue,,0000,0000,0000,,Đứng dậy ! Đi theo ta!
Dialogue: 0,0:10:51.06,0:10:52.73,Dialogue,,0000,0000,0000,,Kalinin-san!
Dialogue: 0,0:10:55.48,0:10:56.44,Dialogue,,0000,0000,0000,,Ông ấy là ai vậy ?
Dialogue: 0,0:10:56.53,0:10:59.53,Dialogue,,0000,0000,0000,,Ông đâu muốn chúng chết phải không ?
Dialogue: 0,0:11:01.41,0:11:02.66,Dialogue,,0000,0000,0000,,Ông thuộc tổ chức nào ?
Dialogue: 0,0:11:02.74,0:11:05.12,Dialogue,,0000,0000,0000,,Chú không được nói, chú Kalinin.
Dialogue: 0,0:11:05.20,0:11:10.58,Dialogue,,0000,0000,0000,,Đó là điều tôi sẽ quyết định, cô Testarossa.
Dialogue: 0,0:11:10.67,0:11:15.46,Dialogue,,0000,0000,0000,,Từ khi nào mà cô dám ra lệnh cho tôi thế ?
Dialogue: 0,0:11:15.55,0:11:19.92,Dialogue,,0000,0000,0000,,Tôi sẽ bắn cô ta đấy. Nói mau, ông biết được bao nhiêu về Lambda Driver ?
Dialogue: 0,0:11:20.01,0:11:21.72,Dialogue,,0000,0000,0000,,Cách hóa giải như thế nào ?
Dialogue: 0,0:11:23.72,0:11:27.27,Dialogue,,0000,0000,0000,,Được rồi. Tôi sẽ nói.
Dialogue: 0,0:11:27.35,0:11:29.35,Dialogue,,0000,0000,0000,,Hãy lại đây.
Dialogue: 0,0:11:28.35,0:11:30.35,Dialogue,,0000,0000,0000,,Cái gì?
Dialogue: 0,0:11:30.44,0:11:33.52,Dialogue,,0000,0000,0000,,Thông tin về Lambda Driver là tối mật.
Dialogue: 0,0:11:33.61,0:11:36.82,Dialogue,,0000,0000,0000,,Tôi không thể để cấp dưới biết được.
Dialogue: 0,0:11:38.74,0:11:41.99,Dialogue,,0000,0000,0000,,Một gã đàn ông thì thầm bên tai chẳng thú vị gì đâu.
Dialogue: 0,0:12:09.60,0:12:13.60,Dialogue,,0000,0000,0000,,Mình lại làm điều ngớ ngẩn nữa rồi.
Dialogue: 0,0:12:13.69,0:12:18.40,Dialogue,,0000,0000,0000,,Tôi xin lỗi. Cho dù là tình huống khẩn cấp nhưng tôi cũng đã gọi cô như thế.
Dialogue: 0,0:12:18.48,0:12:19.53,Dialogue,,0000,0000,0000,,Không có gì.
Dialogue: 0,0:12:19.61,0:12:21.11,Dialogue,,0000,0000,0000,,Chidori Kaname ?
Dialogue: 0,0:12:21.20,0:12:22.11,Dialogue,,0000,0000,0000,,Vâng?
Dialogue: 0,0:12:22.20,0:12:25.95,Dialogue,,0000,0000,0000,,Cám ơn cô đã chăm sóc cho cấp dưới của tôi.
Dialogue: 0,0:12:26.03,0:12:30.04,Dialogue,,0000,0000,0000,,Cám ơn, nhưng mà tôi chỉ vừa gặp Tessa hôm nay.
Dialogue: 0,0:12:30.12,0:12:31.37,Dialogue,,0000,0000,0000,,Tôi không nói về cô ấy.
Dialogue: 0,0:12:31.46,0:12:36.58,Dialogue,,0000,0000,0000,,Kaname-san, ông ấy đang nói về Sagara-san.
Dialogue: 0,0:12:36.67,0:12:37.67,Dialogue,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:12:37.75,0:12:42.17,Dialogue,,0000,0000,0000,,Cô ấy không phải là cấp dưới của tôi. Cô ấy là chỉ huy.
Dialogue: 0,0:12:42.26,0:12:44.68,Dialogue,,0000,0000,0000,,Chúng ta đi chứ, thuyền trưởng?
Dialogue: 0,0:12:44.76,0:12:46.55,Dialogue,,0000,0000,0000,,{\i1}Thông tin từ de Danaan.{\i0}
Dialogue: 0,0:12:46.64,0:12:50.01,Dialogue,,0000,0000,0000,,{\i1}Chúng đang trốn tại George Clinton.{\i0}
Dialogue: 0,0:12:50.10,0:12:51.47,Dialogue,,0000,0000,0000,,1 con tàu chở dầu.
Dialogue: 0,0:12:51.56,0:12:54.02,Dialogue,,0000,0000,0000,,Sousuke, xác nhận đi.
Dialogue: 0,0:12:54.10,0:12:57.77,Dialogue,,0000,0000,0000,,Tín hiệu hiển thị là... Ở phía đó!
Dialogue: 0,0:12:57.86,0:13:00.69,Dialogue,,0000,0000,0000,,Uruz 2, tôi đã xác định được vị trí của George Clinton.
Dialogue: 0,0:13:00.78,0:13:01.86,Dialogue,,0000,0000,0000,,Xin hãy ra lệnh.
Dialogue: 0,0:13:01.94,0:13:05.74,Dialogue,,0000,0000,0000,,Rõ. Uruz 6 và 7, vào trong mục tiêu.
Dialogue: 0,0:13:05.82,0:13:10.66,Dialogue,,0000,0000,0000,,Giải cứu con tin. Tôi sẽ hỗ trợ bên ngoài con tàu.
Dialogue: 0,0:13:10.74,0:13:12.37,Dialogue,,0000,0000,0000,,Rõ.
Dialogue: 0,0:13:12.46,0:13:14.83,Dialogue,,0000,0000,0000,,Ngồi chắc nhé hoặc là cậu sẽ cắn phải lưỡi đấy!
Dialogue: 0,0:13:18.46,0:13:19.59,Dialogue,,0000,0000,0000,,ECS, hủy bỏ!
Dialogue: 0,0:13:19.67,0:13:21.05,Dialogue,,0000,0000,0000,,{\i1}Rõ.{\i0}
Dialogue: 0,0:13:23.59,0:13:24.72,Dialogue,,0000,0000,0000,,Arm Slave !
Dialogue: 0,0:13:24.80,0:13:31.51,Dialogue,,0000,0000,0000,,{\i1}Đây là trạm Aomi PC3. Ở bến cảng số 3, 1 chiếc AS không xác định đang tấn công tàu chở dầu.{\i0}
Dialogue: 0,0:13:31.60,0:13:35.31,Dialogue,,0000,0000,0000,,{\i1}Chúng tôi cần hỗ trợ của Cơ Quan An Toàn Hàng Hải.{\i0}
Dialogue: 0,0:13:34.20,0:13:35.31,Dialogue,,0000,0000,0000,,{\i1}Đồ ngu! Đó là AS.{\i0}
Dialogue: 0,0:13:35.39,0:13:36.98,Dialogue,,0000,0000,0000,,{\i1}Cơ Quan An Toàn Hàng Hải vẫn chưa đủ khả năng!{\i0}
Dialogue: 0,0:13:37.06,0:13:39.61,Dialogue,,0000,0000,0000,,{\i1}Bộ chỉ huy! Yêu cầu thêm quân tiếp viện của Bộ Quốc Phòng !{\i0}
Dialogue: 0,0:13:39.69,0:13:44.03,Dialogue,,0000,0000,0000,,{\i1}Khẩn cấp! Yêu cầu thêm chi viện của Bộ Quốc Phòng!{\i0}
Dialogue: 0,0:13:44.11,0:13:46.32,Dialogue,,0000,0000,0000,,{\i1}Nghe rõ.{\i0}
Dialogue: 0,0:13:46.41,0:13:49.99,Dialogue,,0000,0000,0000,,{\i1}Bảo vệ sự an toàn của tàu chở dầu cho đến khi quân tiếp viện đến.{\i0}
Dialogue: 0,0:13:52.33,0:13:55.25,Dialogue,,0000,0000,0000,,{\i1}Đây là Narashino. Chúng tôi chấp nhận yêu cầu thêm quân tiếp viện.{\i0}
Dialogue: 0,0:13:55.33,0:14:01.46,Dialogue,,0000,0000,0000,,Lực lượng phòng vệ thứ hai, xuất phát ngay lập tức. Ký hiệu WAS-1 .
Dialogue: 0,0:14:01.55,0:14:03.05,Dialogue,,0000,0000,0000,,{\i1}Nhắn tin cho tháp điều khiển trung tâm Haneda:{\i0}
Dialogue: 0,0:14:03.13,0:14:07.18,Dialogue,,0000,0000,0000,,{\i1}"Hãy cho tất cả máy bay đang bay đến Narita tại Kisarazu Marker đi theo đường vòng."{\i0}
Dialogue: 0,0:14:07.26,0:14:11.85,Dialogue,,0000,0000,0000,,{\i1}"Nhắc lại. Tháp điều khiển trung tâm Haneda : Hãy cho tất cả..."{\i0}
Dialogue: 0,0:14:14.81,0:14:19.35,Dialogue,,0000,0000,0000,,Khoan đã! Chẳng phải chúng ta đang đi xuống à ?
Dialogue: 0,0:14:19.44,0:14:22.77,Dialogue,,0000,0000,0000,,Phải. Chúng ta không chỉ chạy trốn thôi.
Dialogue: 0,0:14:22.86,0:14:24.78,Dialogue,,0000,0000,0000,,Có vài thứ chúng tôi cần phải xác minh.
Dialogue: 0,0:14:28.82,0:14:32.87,Dialogue,,0000,0000,0000,,Đây là những sợi dây cáp để vận hành turbin khí cỡ lớn cho máy phát điện.
Dialogue: 0,0:14:32.95,0:14:35.66,Dialogue,,0000,0000,0000,,Bọn chúng đang làm cái gì đó ở đáy con tàu này.
Dialogue: 0,0:14:35.75,0:14:36.91,Dialogue,,0000,0000,0000,,Đó là cái gì ?
Dialogue: 0,0:14:37.00,0:14:41.17,Dialogue,,0000,0000,0000,,Tớ không biết nhưng chắc chắn không phải là trò lắp ráp của trẻ con.
Dialogue: 0,0:14:41.25,0:14:44.25,Dialogue,,0000,0000,0000,,Một đứa trẻ tin rằng nó đã lớn...
Dialogue: 0,0:14:44.34,0:14:47.30,Dialogue,,0000,0000,0000,,đôi khi nó tạo ra những thứ rất ấn tượng.
Dialogue: 0,0:14:48.80,0:14:51.64,Dialogue,,0000,0000,0000,,{\i1}Điện khẩn, đây là trạm kiểm soát Tokyo.{\i0}
Dialogue: 0,0:14:51.72,0:14:56.85,Dialogue,,0000,0000,0000,,{\i1}Gửi tất cả hãng hàng không, bây giờ Haneda đã được phong tỏa bởi lực lượng JSD.{\i0}
Dialogue: 0,0:14:56.93,0:15:01.02,Dialogue,,0000,0000,0000,,{\i1}Vì vậy chúng tôi muốn mở đường đến Narita tại Kisarzu Marker.{\i0}
Dialogue: 0,0:15:03.07,0:15:04.65,Dialogue,,0000,0000,0000,,Cái gì thế này?
Dialogue: 0,0:15:12.12,0:15:14.12,Dialogue,,0000,0000,0000,,Không thể nào...
Dialogue: 0,0:15:14.20,0:15:18.20,Dialogue,,0000,0000,0000,,Nếu như thứ này di chuyển thì chúng ta sẽ không thể làm gì được.
Dialogue: 0,0:15:18.29,0:15:20.67,Dialogue,,0000,0000,0000,,Rất nhiều người sẽ chết.
Dialogue: 0,0:15:20.75,0:15:23.00,Dialogue,,0000,0000,0000,,Tóm lại nó là gì thế ?
Dialogue: 0,0:15:23.09,0:15:24.88,Dialogue,,0000,0000,0000,,Là đồ chơi của tôi.
Dialogue: 0,0:15:29.38,0:15:30.76,Dialogue,,0000,0000,0000,,Tuyệt đẹp phải không ?
Dialogue: 0,0:15:30.84,0:15:32.93,Dialogue,,0000,0000,0000,,Nó gọi là Behemoth.
Dialogue: 0,0:15:33.01,0:15:37.22,Dialogue,,0000,0000,0000,,{\i1}Đây là WAS-1 , gọi Ichigaya. Đường không đã thoáng chưa?{\i0}
Dialogue: 0,0:15:37.31,0:15:38.73,Dialogue,,0000,0000,0000,,{\i1}Đây là Ichigaya.{\i0}
Dialogue: 0,0:15:38.81,0:15:41.06,Dialogue,,0000,0000,0000,,{\i1}Tất cả máy bay đã đi vòng đến Narita từ Kisarazu.{\i0}
Dialogue: 0,0:15:41.15,0:15:42.65,Dialogue,,0000,0000,0000,,{\i1}Đã hoàn toàn thông thoáng.{\i0}
Dialogue: 0,0:15:42.73,0:15:45.86,Dialogue,,0000,0000,0000,,{\i1}Rõ. WAS-1 gọi tất cả chiến đấu cơ.{\i0}
Dialogue: 0,0:15:45.94,0:15:48.36,Dialogue,,0000,0000,0000,,{\i1}Chúng ta sẽ xếp theo đội hình tấn công ngay bây giờ.{\i0}
Dialogue: 0,0:15:48.44,0:15:51.82,Dialogue,,0000,0000,0000,,{\i1}Bắt đầu thấp dần theo chiều kim đồng hồ xung quanh vòng xoay Ferris.{\i0}
Dialogue: 0,0:15:53.74,0:15:59.66,Dialogue,,0000,0000,0000,,Khi nghe tiếng súng, tôi biết chắc rằng ông sẽ đến đây.
Dialogue: 0,0:15:59.75,0:16:02.71,Dialogue,,0000,0000,0000,,Tôi sẽ xem nó như một lời khen.
Dialogue: 0,0:16:02.79,0:16:07.30,Dialogue,,0000,0000,0000,,Thật điên rồ khi cố điều khiển thứ này.
Dialogue: 0,0:16:07.38,0:16:12.84,Dialogue,,0000,0000,0000,,Chúng tôi là khủng bố, Testarossa-san.
Dialogue: 0,0:16:14.01,0:16:18.97,Dialogue,,0000,0000,0000,,Tôi không muốn bất kỳ lợi ích cá nhân nào khi sử dụng nó.
Dialogue: 0,0:16:19.06,0:16:23.81,Dialogue,,0000,0000,0000,,Nó chỉ là sự biểu hiện, chỉ là ý kiến của tôi. Đại loại là thế.
Dialogue: 0,0:16:23.90,0:16:30.11,Dialogue,,0000,0000,0000,,Trong thời gian 1 năm, hầu hết mọi người sẽ lãng quên nó.
Dialogue: 0,0:16:30.19,0:16:32.99,Dialogue,,0000,0000,0000,,Như là Takechi Seiji ?
Dialogue: 0,0:16:33.07,0:16:37.91,Dialogue,,0000,0000,0000,,Phải, nhưng tôi không quan tâm đến sau này.
Dialogue: 0,0:16:37.99,0:16:40.79,Dialogue,,0000,0000,0000,,Tôi là chiến binh được chọn.
Dialogue: 0,0:16:40.87,0:16:44.92,Dialogue,,0000,0000,0000,,Một khi tôi bước vào Behemoth, nó sẽ trở nên bất khả chiến bại.
Dialogue: 0,0:16:45.00,0:16:48.00,Dialogue,,0000,0000,0000,,Tôi sẽ hủy diệt tất cả.
Dialogue: 0,0:16:48.09,0:16:52.38,Dialogue,,0000,0000,0000,,Sau đó chị tôi sẽ được hạnh phúc và tôi sẽ được thỏa mãn.
Dialogue: 0,0:16:52.47,0:16:56.22,Dialogue,,0000,0000,0000,,Dừng lại đi, Takuma! Cậu vẫn còn có thể quay lại.
Dialogue: 0,0:16:56.30,0:16:58.18,Dialogue,,0000,0000,0000,,Đừng gọi tôi là Takuma!
Dialogue: 0,0:16:58.26,0:17:01.52,Dialogue,,0000,0000,0000,,Chỉ có chị tôi mới được gọi tôi như thế.
Dialogue: 0,0:17:01.60,0:17:04.39,Dialogue,,0000,0000,0000,,Đã quá trễ rồi, Testarossa-san.
Dialogue: 0,0:17:04.48,0:17:10.40,Dialogue,,0000,0000,0000,,Tôi có thể đã thích cô nhưng đã đến lúc tạm biệt rồi.
Dialogue: 0,0:17:19.66,0:17:22.91,Dialogue,,0000,0000,0000,,Cái gì thế? \N Vụ nổ ở đâu vậy?
Dialogue: 0,0:17:23.00,0:17:25.00,Dialogue,,0000,0000,0000,,Bắt đầu rồi.
Dialogue: 0,0:17:28.04,0:17:31.21,Dialogue,,0000,0000,0000,,Takuma, vào Behemoth nhanh đi!
Dialogue: 0,0:17:39.01,0:17:39.89,Dialogue,,0000,0000,0000,,Sousuke!
Dialogue: 0,0:17:39.97,0:17:41.35,Dialogue,,0000,0000,0000,,Trung sĩ Sagara!
Dialogue: 0,0:17:44.35,0:17:45.35,Dialogue,,0000,0000,0000,,Coi chừng!
Dialogue: 0,0:17:48.40,0:17:49.56,Dialogue,,0000,0000,0000,,Takuma!
Dialogue: 0,0:17:52.19,0:17:53.11,Dialogue,,0000,0000,0000,,Chidori?
Dialogue: 0,0:17:53.19,0:17:55.07,Dialogue,,0000,0000,0000,,Tớ đã lo lắng cho cậu lắm!
Dialogue: 0,0:17:55.15,0:17:56.28,Dialogue,,0000,0000,0000,,Xin lỗi.
Dialogue: 0,0:17:56.36,0:17:58.32,Dialogue,,0000,0000,0000,,Tớ đã rất sợ!
Dialogue: 0,0:17:58.41,0:17:59.82,Dialogue,,0000,0000,0000,,Tôi xin lỗi.
Dialogue: 0,0:17:59.91,0:18:00.91,Dialogue,,0000,0000,0000,,Đồ ngốc!
Dialogue: 0,0:18:00.99,0:18:03.33,Dialogue,,0000,0000,0000,,Này, này. Còn vai trò của tôi thì sao ?
Dialogue: 0,0:18:03.41,0:18:05.66,Dialogue,,0000,0000,0000,,Làm tốt lắm.
Dialogue: 0,0:18:05.75,0:18:07.54,Dialogue,,0000,0000,0000,,Vào nhanh lên đi!
Dialogue: 0,0:18:07.62,0:18:10.33,Dialogue,,0000,0000,0000,,Nee-san, em bị thương rồi!
Dialogue: 0,0:18:10.42,0:18:13.09,Dialogue,,0000,0000,0000,,Đừng có rên rỉ như thế chỉ vì một vết thương nhỏ.
Dialogue: 0,0:18:13.17,0:18:16.09,Dialogue,,0000,0000,0000,,Nhưng nó đau lắm!
Dialogue: 0,0:18:16.18,0:18:21.35,Dialogue,,0000,0000,0000,,Nếu như em không lái nó, em chỉ là kẻ vô dụng!
Dialogue: 0,0:18:21.43,0:18:25.02,Dialogue,,0000,0000,0000,,Nếu như em bỏ chạy lúc này...
Dialogue: 0,0:18:26.94,0:18:28.60,Dialogue,,0000,0000,0000,,thì chị không cần em nữa.
Dialogue: 0,0:19:01.72,0:19:03.81,Dialogue,,0000,0000,0000,,Trông có vẻ không ổn tý nào.
Dialogue: 0,0:19:06.27,0:19:07.89,Dialogue,,0000,0000,0000,,Cái gì thế này.
Dialogue: 0,0:19:07.98,0:19:10.06,Dialogue,,0000,0000,0000,,Chạy thôi! Hãy rời khỏi đây mau!
Dialogue: 0,0:19:10.15,0:19:13.86,Dialogue,,0000,0000,0000,,Takuma, cậu không nên điều khiển nó!
Dialogue: 0,0:19:13.94,0:19:17.65,Dialogue,,0000,0000,0000,,Cậu sẽ bị nuốt chửng bởi chính cỗ máy đó.
Dialogue: 0,0:19:25.74,0:19:28.83,Dialogue,,0000,0000,0000,,Nee-san, em hiểu rồi.
Dialogue: 0,0:19:28.91,0:19:32.12,Dialogue,,0000,0000,0000,,{\i1}Behemoth đang bị chìm bởi quá trọng lượng.{\i0}
Dialogue: 0,0:19:32.21,0:19:34.67,Dialogue,,0000,0000,0000,,{\i1}Xin hãy khởi động Lambda Driver.{\i0}
Dialogue: 0,0:19:34.75,0:19:37.38,Dialogue,,0000,0000,0000,,Em đi đây. Hãy dõi theo em.
Dialogue: 0,0:19:37.46,0:19:39.92,Dialogue,,0000,0000,0000,,Em hy vọng chị sẽ được hạnh phúc.
Dialogue: 0,0:19:40.01,0:19:44.35,Dialogue,,0000,0000,0000,,{\i1}Chức năng đầu tiên của Lambda Driver. Đã xác nhận.{\i0}
Dialogue: 0,0:19:47.47,0:19:49.85,Dialogue,,0000,0000,0000,,Vĩnh biệt, nee-san.
Dialogue: 0,0:19:54.15,0:19:57.48,Dialogue,,0000,0000,0000,,{\i1}Không thể giữ thăng bằng ngang và dọc.{\i0}
Dialogue: 0,0:20:02.82,0:20:06.87,Dialogue,,0000,0000,0000,,Dẫn thuyền trưởng và Chidori thoát ra khỏi đây, nhanh lên!
Dialogue: 0,0:20:06.95,0:20:09.16,Dialogue,,0000,0000,0000,,Rõ. Còn ngài thì sao, phó chỉ huy ?
Dialogue: 0,0:20:09.25,0:20:13.00,Dialogue,,0000,0000,0000,,Ta không chết dễ thế đâu. Đi đi!
Dialogue: 0,0:20:13.08,0:20:14.58,Dialogue,,0000,0000,0000,,Chú Kalinin!
Dialogue: 0,0:20:26.60,0:20:28.18,Dialogue,,0000,0000,0000,,Rời khỏi đây mau!
Dialogue: 0,0:20:29.93,0:20:31.31,Dialogue,,0000,0000,0000,,Hãy đi với tôi!
Dialogue: 0,0:20:41.15,0:20:42.45,Dialogue,,0000,0000,0000,,{\i1}Đó là mục tiêu ư ?{\i0}
Dialogue: 0,0:20:42.53,0:20:45.49,Dialogue,,0000,0000,0000,,{\i1}Tôi không biết. Chiếc AS đâu rồi ?{\i0}
Dialogue: 0,0:21:13.23,0:21:24.95,Songs (Romanji),,0000,0000,0000,,Kokoro ni chiisana hana ga saiteru
Dialogue: 0,0:21:25.03,0:21:36.12,Songs (Romanji),,0000,0000,0000,,Kimi kara moratta karenai hana ga
Dialogue: 0,0:21:36.21,0:21:42.13,Songs (Romanji),,0000,0000,0000,,Shinjiru koto mo kowagaranai kurai
Dialogue: 0,0:21:42.21,0:21:49.30,Songs (Romanji),,0000,0000,0000,,Tsuyoku nareta kara
Dialogue: 0,0:21:49.39,0:21:55.18,Songs (Romanji),,0000,0000,0000,,Kimi ni aete ureshikatta
Dialogue: 0,0:21:55.27,0:22:01.82,Songs (Romanji),,0000,0000,0000,,Tsunaida te ga hokoridatta
Dialogue: 0,0:22:01.90,0:22:08.41,Songs (Romanji),,0000,0000,0000,,Ima wa betsubetsu no sora miagete itemo
Dialogue: 0,0:22:08.49,0:22:17.16,Songs (Romanji),,0000,0000,0000,,Hora arukeru hitori demo
Dialogue: 0,0:21:13.23,0:21:24.95,Songs,,0000,0000,0000,,Bông hoa nhỏ trong tim em
Dialogue: 0,0:21:25.03,0:21:36.12,Songs,,0000,0000,0000,,Bông hoa không bao giờ tàn mà anh đã tặng em
Dialogue: 0,0:21:36.21,0:21:42.13,Songs,,0000,0000,0000,,Em không hề sợ hãi, thậm chí luôn tin tưởng
Dialogue: 0,0:21:42.21,0:21:49.30,Songs,,0000,0000,0000,,Đó là điều khiến em trở nên mạnh mẽ
Dialogue: 0,0:21:49.39,0:21:55.18,Songs,,0000,0000,0000,,Em rất hạnh phúc vì đã gặp anh
Dialogue: 0,0:21:55.27,0:22:01.82,Songs,,0000,0000,0000,,Em tự hào khi nắm tay anh
Dialogue: 0,0:22:01.90,0:22:08.41,Songs,,0000,0000,0000,,Dù cho hai ta hướng về bầu trời khác nhau
Dialogue: 0,0:22:08.49,0:22:17.16,Songs,,0000,0000,0000,,Anh thấy không, em có thể tự mình bước đi
Dialogue: 0,0:22:25.85,0:22:30.23,Dialogue,,0000,0000,0000,,"Bộ phim này hoàn toàn là hư cấu.\N Tên nhân vật và các tổ chức trong phim không liên quan đến bất cứ cá nhân, tổ chức nào."
Dialogue: 0,0:22:31.05,0:22:32.76,Dialogue,,0000,0000,0000,,Đuổi theo chiếc xe trên con đường ven biển lúc bình minh.
Dialogue: 0,0:22:32.85,0:22:35.18,Dialogue,,0000,0000,0000,,Thế đứng của Behemoth, sự phản công của Arbalest.
Dialogue: 0,0:22:35.27,0:22:38.39,Dialogue,,0000,0000,0000,,Một lần nữa sức mạnh ấy lại thức tỉnh bên trong tớ.
Dialogue: 0,0:22:38.48,0:22:42.19,Dialogue,,0000,0000,0000,,Kỳ tới Full Metal Panic: tập 12, "One Night Stand."
Dialogue: 0,0:22:42.27,0:22:45.19,Dialogue,,0000,0000,0000,,Sousuke, tớ chưa từng lái nó trước đây !
Dialogue: 0,0:22:45.28,0:22:46.90,Dialogue,,0000,0000,0000,,Đó là tay lái.
