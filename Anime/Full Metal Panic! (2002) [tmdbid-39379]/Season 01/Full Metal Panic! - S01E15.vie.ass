Dialogue: 0,0:00:16.51,0:00:23.77,Songs (Romanji),,0000,0000,0000,,Futari de nigebasho sagashite
Dialogue: 0,0:00:23.85,0:00:31.40,Songs (Romanji),,0000,0000,0000,,Hashitta tenki ame no naka
Dialogue: 0,0:00:31.49,0:00:38.83,Songs (Romanji),,0000,0000,0000,,Tatoeba nanika wo ushinau toshite mo
Dialogue: 0,0:00:38.91,0:00:47.67,Songs (Romanji),,0000,0000,0000,,Mamotte ikanakya hitotsu dake wa
Dialogue: 0,0:00:47.75,0:00:54.80,Songs (Romanji),,0000,0000,0000,,Kono sekai ni umareta sono imi wo
Dialogue: 0,0:00:54.88,0:01:00.43,Songs (Romanji),,0000,0000,0000,,Kimi to mitsuke ni yukou
Dialogue: 0,0:01:00.52,0:01:05.64,Songs (Romanji),,0000,0000,0000,,Itami sae mo kakaenagara
Dialogue: 0,0:01:05.73,0:01:12.53,Songs (Romanji),,0000,0000,0000,,Atarashii keshiki mukae ni yukou
Dialogue: 0,0:00:16.51,0:00:23.77,Songs,,0000,0000,0000,,Hai chúng ta đang tìm một nơi để trốn thoát
Dialogue: 0,0:00:23.85,0:00:31.40,Songs,,0000,0000,0000,,Cùng chạy dưới ánh nắng chói chang
Dialogue: 0,0:00:31.49,0:00:38.83,Songs,,0000,0000,0000,,Ngay cả khi em mất một điều gì khác
Dialogue: 0,0:00:38.91,0:00:47.67,Songs,,0000,0000,0000,,Thì em chỉ muốn giữ lấy một điều duy nhất
Dialogue: 0,0:00:47.75,0:00:54.80,Songs,,0000,0000,0000,,Ý nghĩa khi được sinh ra ở thế giới này
Dialogue: 0,0:00:54.88,0:01:00.43,Songs,,0000,0000,0000,,Hãy đi cùng em và tìm hiểu
Dialogue: 0,0:01:00.52,0:01:05.64,Songs,,0000,0000,0000,,Giữ chặt lấy nó, dù cho là nỗi đau
Dialogue: 0,0:01:05.73,0:01:12.53,Songs,,0000,0000,0000,,Cùng tiến lên đón chào thế giới mới
Dialogue: 0,0:01:14.53,0:01:18.88,Dialogue,,0000,0000,0000,,Translator: MaHiME
Dialogue: 0,0:01:22.88,0:01:28.88,Dialogue,,0000,0000,0000,,Waya fansub presents
Dialogue: 0,0:01:30.50,0:01:32.30,Dialogue,,0000,0000,0000,,Hãy tưởng tượng!
Dialogue: 0,0:01:32.39,0:01:35.88,Dialogue,,0000,0000,0000,,Nếu cậu thất bại, bọn chúng sẽ lột quần áo, chơi đùa với cơ thể tớ và giết tớ!
Dialogue: 0,0:01:35.97,0:01:37.97,Dialogue,,0000,0000,0000,,Hãy tưởng tượng những cảnh đó.
Dialogue: 0,0:01:39.97,0:01:41.39,Dialogue,,0000,0000,0000,,{\i1}Cậu ghét điều đó, phải không?{\i0}
Dialogue: 0,0:01:41.47,0:01:42.72,Dialogue,,0000,0000,0000,,Ờ.
Dialogue: 0,0:01:42.81,0:01:43.89,Dialogue,,0000,0000,0000,,{\i1}Cậu nổi điên rồi chứ?{\i0}
Dialogue: 0,0:01:43.98,0:01:45.39,Dialogue,,0000,0000,0000,,Có lẽ thế.
Dialogue: 0,0:01:45.48,0:01:49.86,Dialogue,,0000,0000,0000,,{\i1}Hắn cố làm điều đó với tớ. Cậu sẽ không để hắn làm thế, phải không?{\i0}
Dialogue: 0,0:01:49.94,0:01:51.32,Dialogue,,0000,0000,0000,,Không.
Dialogue: 0,0:01:57.34,0:01:59.32,Dialogue,,0000,0000,0000,,Gió thổi nơi quê nhà - phần 1.
Dialogue: 0,0:02:09.00,0:02:10.79,Dialogue,,0000,0000,0000,,Đến nào !
Dialogue: 0,0:02:17.13,0:02:19.55,Dialogue,,0000,0000,0000,,Tiểu thư, cô đang cô đơn à ?
Dialogue: 0,0:02:20.97,0:02:22.97,Dialogue,,0000,0000,0000,,Tệ thật đấy, tôi đang cô đơn đây.
Dialogue: 0,0:02:23.06,0:02:27.23,Dialogue,,0000,0000,0000,,Sao chúng ta không đi ra chỗ mấy cọc bê tông để xem rận biển nhỉ ?
Dialogue: 0,0:02:28.85,0:02:31.36,Dialogue,,0000,0000,0000,,Xin lỗi nhé vì chúng tôi không phải là Sousuke.
Dialogue: 0,0:02:31.44,0:02:33.27,Dialogue,,0000,0000,0000,,Cậu ta đang bận đi công tác.
Dialogue: 0,0:02:33.36,0:02:36.03,Dialogue,,0000,0000,0000,,Không có gì. Tôi không quan tâm đến anh ta.
Dialogue: 0,0:02:36.11,0:02:37.28,Dialogue,,0000,0000,0000,,Bingo!
Dialogue: 0,0:02:37.99,0:02:39.45,Signs,,0000,0000,0000,,Vài ngày trước.
Dialogue: 0,0:02:40.49,0:02:41.95,Signs,,0000,0000,0000,,Căn cứ trên đảo Merida.
Dialogue: 0,0:02:41.03,0:02:42.53,Dialogue,,0000,0000,0000,,Xin mạn phép.
Dialogue: 0,0:02:44.29,0:02:46.75,Dialogue,,0000,0000,0000,,Sagara-san, cám ơn anh đã đến.
Dialogue: 0,0:02:46.83,0:02:48.54,Dialogue,,0000,0000,0000,,Người này đến từ Cục Tình Báo.
Dialogue: 0,0:02:48.62,0:02:51.29,Dialogue,,0000,0000,0000,,Trung sĩ Sagara, hãy nhìn phía sau.
Dialogue: 0,0:02:54.71,0:02:59.80,Dialogue,,0000,0000,0000,,Cục Tình Báo đã chụp được những bức ảnh này tại Helmajistan vào ngày hôm kia.
Dialogue: 0,0:03:01.55,0:03:02.55,Dialogue,,0000,0000,0000,,Cậu thấy thế nào ?
Dialogue: 0,0:03:02.64,0:03:04.93,Dialogue,,0000,0000,0000,,Có thấy gương mặt quen thuộc không ?
Dialogue: 0,0:03:07.77,0:03:12.77,Dialogue,,0000,0000,0000,,Cậu có vẻ như có nhiều bạn bè gặp vận may đấy.
Dialogue: 0,0:03:14.23,0:03:15.90,Dialogue,,0000,0000,0000,,Tôi sẽ nói ngắn gọn thôi.
Dialogue: 0,0:03:15.98,0:03:20.95,Dialogue,,0000,0000,0000,,Lực lượng Ấn Độ Dương sẽ sớm thực hiện nhiệm vụ ám sát tên này.
Dialogue: 0,0:03:22.16,0:03:25.33,Dialogue,,0000,0000,0000,,Chúng tôi đã quyết định cậu sẽ tham gia vào lực lượng đó.
Dialogue: 0,0:03:25.41,0:03:26.83,Dialogue,,0000,0000,0000,,Có 3 lý do chính.
Dialogue: 0,0:03:26.91,0:03:30.21,Dialogue,,0000,0000,0000,,Thứ nhất, cậu đã có kinh nghiệm chiến đấu đối với mục tiêu.
Dialogue: 0,0:03:30.29,0:03:35.71,Dialogue,,0000,0000,0000,,Thứ hai, chúng tôi nghĩ rằng sẽ cần đến Arbalest để có thể tiêu diệt mục tiêu.
Dialogue: 0,0:03:35.80,0:03:39.01,Dialogue,,0000,0000,0000,,Thứ ba, cậu đã nắm rõ địa hình ở Helmajistan.
Dialogue: 0,0:03:39.09,0:03:43.43,Dialogue,,0000,0000,0000,,Nhiệm vụ của cậu đã được quyết định. Không được phép phản đối.
Dialogue: 0,0:03:43.51,0:03:46.68,Dialogue,,0000,0000,0000,,Chúng tôi sẽ mượn cậu ta, thuyền trưởng Testarossa.
Dialogue: 0,0:03:49.60,0:03:54.10,Dialogue,,0000,0000,0000,,Thế à. Vậy là hắn vẫn còn sống.
Dialogue: 0,0:03:54.19,0:03:55.98,Dialogue,,0000,0000,0000,,Tôi xin lỗi, Sagara-san.
Dialogue: 0,0:03:56.07,0:03:59.40,Dialogue,,0000,0000,0000,,Mặc dù đây không phải là nhiệm vụ của Tuatha de Danaan...
Dialogue: 0,0:03:59.49,0:04:02.78,Dialogue,,0000,0000,0000,,Tôi đã phản đối quyết định đó.
Dialogue: 0,0:04:02.86,0:04:06.70,Dialogue,,0000,0000,0000,,Không sao cả. Tôi sẽ làm việc này ngay cả khi đó là tình nguyện.
Dialogue: 0,0:04:08.16,0:04:12.12,Dialogue,,0000,0000,0000,,Vậy là cậu sẽ đến Helmajistan.
Dialogue: 0,0:04:12.21,0:04:13.00,Dialogue,,0000,0000,0000,,Vâng.
Dialogue: 0,0:04:13.08,0:04:15.46,Dialogue,,0000,0000,0000,,Đừng nóng nảy quá đấy.
Dialogue: 0,0:04:20.13,0:04:22.93,Dialogue,,0000,0000,0000,,Thuyền trưởng, cô không cần phải lo lắng.
Dialogue: 0,0:04:23.01,0:04:25.97,Dialogue,,0000,0000,0000,,Đó là quê hương của cậu ta.
Dialogue: 0,0:04:26.05,0:04:33.02,Dialogue,,0000,0000,0000,,Nhưng cháu có cảm giác rằng chuyện gì đó tồi tệ sẽ xảy ra.
Dialogue: 0,0:04:38.11,0:04:43.07,Dialogue,,0000,0000,0000,,Tên Hercules đã bị hạ đo ván ở giây thứ 30.
Dialogue: 0,0:04:43.15,0:04:47.03,Dialogue,,0000,0000,0000,,Nó rõ ràng là một cuộc dàn xếp. Tôi đã điên đến độ đấm cả tên đặt cược.
Dialogue: 0,0:04:47.12,0:04:50.37,Dialogue,,0000,0000,0000,,Rồi thì lạ thật, 100$ đô của tôi trở thành 1000$.
Dialogue: 0,0:04:50.45,0:04:56.17,Dialogue,,0000,0000,0000,,Họ nói đầu tư cho Brooklyn còn tốt hơn cả Wall Street đấy.
Dialogue: 0,0:04:56.25,0:05:00.09,Dialogue,,0000,0000,0000,,Nếu như cậu cứ mãi ảo tưởng thì cậu sẽ sớm ăn cú đấm ngược thôi.
Dialogue: 0,0:05:00.92,0:05:05.38,Dialogue,,0000,0000,0000,,Jackson, Cậu có thể tán nhảm nhưng sao cậu không nghĩ đến nhiệm vụ của mình ?
Dialogue: 0,0:05:05.47,0:05:07.34,Dialogue,,0000,0000,0000,,Cô muốn tôi nghĩ về cái gì nào ?
Dialogue: 0,0:05:07.43,0:05:09.51,Dialogue,,0000,0000,0000,,Tôi chưa từng nghe nhiệm vụ nào dễ như thế này.
Dialogue: 0,0:05:09.60,0:05:11.35,Dialogue,,0000,0000,0000,,Tôi không thích thế.
Dialogue: 0,0:05:11.43,0:05:17.60,Dialogue,,0000,0000,0000,,Sao tất cả chúng ta phải lặn lội đến tận Helmajistan chỉ để giết một tên khủng bố ?
Dialogue: 0,0:05:17.69,0:05:21.07,Dialogue,,0000,0000,0000,,Bởi vì hắn là kẻ cực kỳ nguy hiểm, phải không ?
Dialogue: 0,0:05:21.15,0:05:24.28,Dialogue,,0000,0000,0000,,Tôi có nghe nói là hắn ta sử dụng một loại vũ khí thử nghiệm đặc biệt, phải không Bill ?
Dialogue: 0,0:05:24.36,0:05:27.61,Dialogue,,0000,0000,0000,,Tôi cũng nghe nói thế. Chúng ta đang bị xem thường.
Dialogue: 0,0:05:47.64,0:05:51.10,Dialogue,,0000,0000,0000,,Này, sao lại có kẻ xin quá giang ở đây thế ?
Dialogue: 0,0:05:51.18,0:05:56.23,Dialogue,,0000,0000,0000,,À phải rồi ! Cậu ấy là Trung sĩ Sagara của Danaan! Phải không ?
Dialogue: 0,0:05:56.31,0:05:58.40,Dialogue,,0000,0000,0000,,Trung sĩ ? Là hắn ư ?
Dialogue: 0,0:05:58.48,0:06:03.61,Dialogue,,0000,0000,0000,,Oi, oi ! Từ bao giờ mà đội này trở thành đội bóng chày Seattle thế ?
Dialogue: 0,0:06:03.69,0:06:06.65,Dialogue,,0000,0000,0000,,Không ngờ rằng hắn ta chỉ là một đứa trẻ con.
Dialogue: 0,0:06:08.36,0:06:13.54,Dialogue,,0000,0000,0000,,Này nhóc ! Muốn ăn socola không ? Ta cũng có kẹo đây nè.
Dialogue: 0,0:06:13.62,0:06:16.20,Dialogue,,0000,0000,0000,,Đủ rồi đấy ! Jackson!
Dialogue: 0,0:06:18.54,0:06:22.17,Dialogue,,0000,0000,0000,,Đùa thôi! Tôi chỉ đùa thôi mà ! Chúng ta còn một chặng đường dài.
Dialogue: 0,0:06:22.25,0:06:25.92,Dialogue,,0000,0000,0000,,Làm bạn nhé, Tom Sawyer.
Dialogue: 0,0:06:28.55,0:06:31.97,Dialogue,,0000,0000,0000,,Xin lỗi vì cậu ta ăn nói thô lỗ như thế.
Dialogue: 0,0:06:32.06,0:06:33.10,Dialogue,,0000,0000,0000,,Không sao cả.
Dialogue: 0,0:06:33.18,0:06:37.73,Dialogue,,0000,0000,0000,,Tôi là phó chỉ huy Grace Wiseman. Mọi người thường gọi là Gray.
Dialogue: 0,0:06:37.81,0:06:39.39,Dialogue,,0000,0000,0000,,Tôi là trung sĩ Sagara Sousuke.
Dialogue: 0,0:06:39.48,0:06:44.07,Dialogue,,0000,0000,0000,,Tôi nghe nói cậu nắm rõ về Helmajistan. Chúng tôi trông cậy vào cậu đấy.
Dialogue: 0,0:06:47.20,0:06:49.86,Dialogue,,0000,0000,0000,,Nghe này ! Đây là nhiệm vụ của chúng tôi.
Dialogue: 0,0:06:49.95,0:06:52.41,Dialogue,,0000,0000,0000,,Chúng tôi không có ý định nghe lời khuyên của cậu, kẻ ngoài cuộc.
Dialogue: 0,0:06:52.49,0:06:54.20,Dialogue,,0000,0000,0000,,Hãy nhớ đấy !
Dialogue: 0,0:07:44.59,0:07:48.96,Dialogue,,0000,0000,0000,,Sao chúng ta không đến khu vực của kẻ địch bằng máy bay ?
Dialogue: 0,0:07:49.05,0:07:51.80,Dialogue,,0000,0000,0000,,Bởi vì nơi này thường xuyên có bão cát...
Dialogue: 0,0:07:51.88,0:07:55.64,Dialogue,,0000,0000,0000,,chúng ta không thể thường xuyên sử dụng ECS. Đó là một hệ thống nhạy cảm.
Dialogue: 0,0:07:55.72,0:07:59.39,Dialogue,,0000,0000,0000,,Thật vô dụng. Quần áo ngụy trang còn có ích hơn nhiều.
Dialogue: 0,0:07:59.48,0:08:00.89,Dialogue,,0000,0000,0000,,Vậy chúng ta phải đi bộ à ?
Dialogue: 0,0:08:00.98,0:08:04.35,Dialogue,,0000,0000,0000,,Ai chà. Chuyến dã ngoại này quả là khó khăn cho người già.
Dialogue: 0,0:08:44.48,0:08:45.48,Dialogue,,0000,0000,0000,,Dừng lại.
Dialogue: 0,0:08:48.32,0:08:49.27,Dialogue,,0000,0000,0000,,Bill?
Dialogue: 0,0:08:49.36,0:08:52.94,Dialogue,,0000,0000,0000,,Bọn chúng đã di chuyển nhanh hơn chúng ta mong đợi.
Dialogue: 0,0:08:56.53,0:08:59.33,Dialogue,,0000,0000,0000,,Nó đấy ư ? Cậu có thấy mục tiêu không ?
Dialogue: 0,0:08:59.41,0:09:03.87,Dialogue,,0000,0000,0000,,1 , 2 , 6 Savages và... cái gì ?
Dialogue: 0,0:09:03.96,0:09:07.08,Dialogue,,0000,0000,0000,,Đi phía trước là một AS tôi chưa từng thấy trước đây.
Dialogue: 0,0:09:07.17,0:09:11.13,Dialogue,,0000,0000,0000,,Không, còn một con nữa. Nhìn vào toa phía sau đi.
Dialogue: 0,0:09:19.47,0:09:23.56,Dialogue,,0000,0000,0000,,Nghe đây, chúng sẽ đến thung lũng này trong vòng 4 giờ.
Dialogue: 0,0:09:23.64,0:09:27.77,Dialogue,,0000,0000,0000,,Chúng sẽ tốn một ít thời gian để băng qua thung lũng.
Dialogue: 0,0:09:27.86,0:09:30.57,Dialogue,,0000,0000,0000,,Khu vực này từ điểm 04 đến 07...
Dialogue: 0,0:09:30.65,0:09:33.82,Dialogue,,0000,0000,0000,,địa hình rất thích hợp để mở cuộc đột kích bất ngờ.
Dialogue: 0,0:09:33.90,0:09:36.15,Dialogue,,0000,0000,0000,,Khi bọn chúng đang băng qua khu vực này...
Dialogue: 0,0:09:36.24,0:09:39.91,Dialogue,,0000,0000,0000,,chúng ta sẽ tách ra làm hai nhóm và tấn công chúng từ hai phía.
Dialogue: 0,0:09:39.99,0:09:42.29,Dialogue,,0000,0000,0000,,Quả là kế hoạch đơn giản.
Dialogue: 0,0:09:42.37,0:09:45.75,Dialogue,,0000,0000,0000,,Nhiệm vụ là tiêu diệt tên khốn mặt thẹo đó.
Dialogue: 0,0:09:45.83,0:09:48.33,Dialogue,,0000,0000,0000,,Không cần thiết phải sử dụng thủ đoạn rẻ tiền này.
Dialogue: 0,0:09:48.42,0:09:53.21,Dialogue,,0000,0000,0000,,Đúng vậy. Chúng ta không được chỉ thị làm bất cứ điều gì với lô hàng.
Dialogue: 0,0:09:53.30,0:09:58.34,Dialogue,,0000,0000,0000,,Có nghĩa là không có vấn đề gì kể cả khi chúng ta lấy lô hàng của chúng.
Dialogue: 0,0:09:58.43,0:10:00.18,Dialogue,,0000,0000,0000,,Cậu không nên làm bất cứ điều gì trái phép.
Dialogue: 0,0:10:00.26,0:10:02.35,Dialogue,,0000,0000,0000,,Tôi chỉ đùa thôi. Đừng nghiêm túc vậy chứ.
Dialogue: 0,0:10:02.43,0:10:04.31,Dialogue,,0000,0000,0000,,Tôi phản đối.
Dialogue: 0,0:10:06.44,0:10:09.23,Dialogue,,0000,0000,0000,,Ngươi vừa nói gì thế, nhóc samurai ?
Dialogue: 0,0:10:09.31,0:10:13.73,Dialogue,,0000,0000,0000,,Để tiêu diệt Gauron, chúng ta cần tấn công khi hắn đang ở xa AS của mình.
Dialogue: 0,0:10:13.82,0:10:15.78,Dialogue,,0000,0000,0000,,Một khi hắn đã vào trong cỗ máy đó...
Dialogue: 0,0:10:15.86,0:10:19.41,Dialogue,,0000,0000,0000,,chúng ta không có cơ hội để hạ hắn kể cả khi tất cả M9 cùng xông lên.
Dialogue: 0,0:10:19.49,0:10:21.37,Dialogue,,0000,0000,0000,,Ngươi muốn chết ư ?
Dialogue: 0,0:10:21.45,0:10:25.20,Dialogue,,0000,0000,0000,,Ta đã nói. Chúng ta không cần lời khuyên của ngươi.
Dialogue: 0,0:10:25.29,0:10:28.83,Dialogue,,0000,0000,0000,,Chờ đã! Cậu ấy đã có kinh nghiệm chiến đấu với gã đó.
Dialogue: 0,0:10:28.92,0:10:31.58,Dialogue,,0000,0000,0000,,Các cậu không nghĩ chúng ta nên nghe ý kiến của cậu ấy sao ?
Dialogue: 0,0:10:31.67,0:10:35.34,Dialogue,,0000,0000,0000,,Thằng nhóc đó đánh bại võ sĩ sumo. Tất cả chỉ là thế.
Dialogue: 0,0:10:35.42,0:10:37.72,Dialogue,,0000,0000,0000,,Chúng ta có cần nhờ đứa trẻ dạy mình vị trí phòng thủ không ?
Dialogue: 0,0:10:37.80,0:10:40.55,Dialogue,,0000,0000,0000,,Không phải ! Cậu ta đã chiến đấu với hắn một cách bình đẳng.
Dialogue: 0,0:10:40.64,0:10:42.51,Dialogue,,0000,0000,0000,,Cô đã tận mắt chứng kiến à ?
Dialogue: 0,0:10:42.60,0:10:45.81,Dialogue,,0000,0000,0000,,Nó được viết trong báo cáo của Danaan.
Dialogue: 0,0:10:45.89,0:10:48.52,Dialogue,,0000,0000,0000,,Cô có thể tin tưởng mấy phần vào cái báo cáo đó ?
Dialogue: 0,0:10:48.60,0:10:50.98,Dialogue,,0000,0000,0000,,Trên hết là những kẻ ở Danaan rất phiền phức.
Dialogue: 0,0:10:51.06,0:10:53.73,Dialogue,,0000,0000,0000,,Chúng luôn có những món đồ chơi mới cho bản thân mình.
Dialogue: 0,0:10:53.82,0:10:56.44,Dialogue,,0000,0000,0000,,Hoặc là cô đã yêu tên nhóc này ?
Dialogue: 0,0:10:56.53,0:10:58.24,Dialogue,,0000,0000,0000,,Cậu nói cái gì thế hả ?
Dialogue: 0,0:10:59.41,0:11:01.36,Dialogue,,0000,0000,0000,,Đó là tất cả những gì tôi cần nói.
Dialogue: 0,0:11:28.64,0:11:33.44,Dialogue,,0000,0000,0000,,Mục tiêu sẽ sớm đến điểm 04. Tất cả hãy chuẩn bị sẵn sàng.
Dialogue: 0,0:11:33.52,0:11:34.69,Dialogue,,0000,0000,0000,,Ai cha cha!
Dialogue: 0,0:11:34.77,0:11:37.57,Dialogue,,0000,0000,0000,,Khốn thật ! Nó cứ như bị bẹp dí vậy.
Dialogue: 0,0:11:37.65,0:11:41.11,Dialogue,,0000,0000,0000,,Vậy tôi sẽ tìm cho cậu một bác sĩ thú y tốt.
Dialogue: 0,0:11:41.20,0:11:45.28,Dialogue,,0000,0000,0000,,Cái gì ? Nghiêm túc đấy ! Nếu nó bị bẹp dí , tôi sẽ xử cô.
Dialogue: 0,0:11:45.37,0:11:46.49,Dialogue,,0000,0000,0000,,Này Bill...
Dialogue: 0,0:11:46.58,0:11:47.37,Dialogue,,0000,0000,0000,,Sao thế ?
Dialogue: 0,0:11:47.41,0:11:49.12,Dialogue,,0000,0000,0000,,Tôi đang nghĩ về Sagara.
Dialogue: 0,0:11:49.21,0:11:53.12,Dialogue,,0000,0000,0000,,Anh không nghĩ là chúng ta nên nghe ý kiến của cậu ấy một cách nghiêm túc hơn à ?
Dialogue: 0,0:11:53.21,0:11:54.54,Dialogue,,0000,0000,0000,,Tại sao cô lại nghĩ vậy ?
Dialogue: 0,0:11:54.63,0:11:58.17,Dialogue,,0000,0000,0000,,Nếu như vũ khí đó đúng như đã được đề cập trong báo cáo...
Dialogue: 0,0:11:58.26,0:12:00.26,Dialogue,,0000,0000,0000,,thì chúng ta có thể sẽ không chịu nổi nó.
Dialogue: 0,0:12:00.34,0:12:02.97,Dialogue,,0000,0000,0000,,Sao cô nhát gan thế.
Dialogue: 0,0:12:03.05,0:12:07.01,Dialogue,,0000,0000,0000,,Tôi có nghe tin đồn. Sau trận chiến của cậu ta...
Dialogue: 0,0:12:07.10,0:12:10.52,Dialogue,,0000,0000,0000,,nó đã không được thắc mắc kể cả khi một thành phố đã biến mất.
Dialogue: 0,0:12:10.60,0:12:12.56,Dialogue,,0000,0000,0000,,Và về lô hàng đó...
Dialogue: 0,0:12:12.65,0:12:14.81,Dialogue,,0000,0000,0000,,Mục tiêu đã đi qua điểm A!
Dialogue: 0,0:12:14.90,0:12:17.94,Dialogue,,0000,0000,0000,,Tọa độ 0-4-1. Khoảng cách 2000 !
Dialogue: 0,0:12:18.03,0:12:21.65,Dialogue,,0000,0000,0000,,Được, nhóm dẫn đầu sẽ đi qua điểm B trong vòng 90 giây.
Dialogue: 0,0:12:21.74,0:12:23.82,Dialogue,,0000,0000,0000,,Chờ cho đến khi chúng đến tọa độ 0-4-5.
Dialogue: 0,0:12:23.91,0:12:26.62,Dialogue,,0000,0000,0000,,Một khi chúng đã vào tầm bắn, chúng ta sẽ tấn công cùng một lượt.
Dialogue: 0,0:12:26.70,0:12:27.58,Dialogue,,0000,0000,0000,,Các cậu rõ chứ ?
Dialogue: 0,0:12:27.66,0:12:28.62,Dialogue,,0000,0000,0000,,Nghe rõ !
Dialogue: 0,0:12:28.70,0:12:30.70,Dialogue,,0000,0000,0000,,Tôi luôn sẵn sàng.
Dialogue: 0,0:12:30.79,0:12:32.96,Dialogue,,0000,0000,0000,,Chuẩn bị cho những tiếng vỡ lớn nào.
Dialogue: 0,0:12:41.34,0:12:42.51,Dialogue,,0000,0000,0000,,Khoan đã! Có gì đó rất lạ...
Dialogue: 0,0:12:42.59,0:12:44.68,Dialogue,,0000,0000,0000,,Có chuyện gì thế, trung sĩ Sagara ?
Dialogue: 0,0:12:44.76,0:12:48.97,Dialogue,,0000,0000,0000,,Tôi không thấy Gauron. Có ai thấy hắn không ?
Dialogue: 0,0:12:54.60,0:12:57.69,Dialogue,,0000,0000,0000,,Tôi cũng không thấy hắn. Còn anh thì sao, Bill ?
Dialogue: 0,0:12:57.77,0:13:01.03,Dialogue,,0000,0000,0000,,Cũng không thấy. Còn Batist ?!
Dialogue: 0,0:13:01.11,0:13:02.49,Dialogue,,0000,0000,0000,,Không thấy.
Dialogue: 0,0:13:02.57,0:13:03.74,Dialogue,,0000,0000,0000,,Andy! Jackson!
Dialogue: 0,0:13:03.82,0:13:06.99,Dialogue,,0000,0000,0000,,Cũng không thấy. Nhưng hắn ta chắc chắn ở đây.
Dialogue: 0,0:13:07.07,0:13:09.03,Dialogue,,0000,0000,0000,,Không lí nào hắn lại rời khỏi đoàn áp tải.
Dialogue: 0,0:13:09.12,0:13:14.04,Dialogue,,0000,0000,0000,,Đúng thế. Nếu chúng ta khuấy động xung quanh, hắn sẽ bất ngờ nhảy ra thôi.
Dialogue: 0,0:13:14.12,0:13:17.71,Dialogue,,0000,0000,0000,,Không được, không có gì đảm bảo rằng hắn ta không ở trong AS.
Dialogue: 0,0:13:17.79,0:13:21.38,Dialogue,,0000,0000,0000,,Nếu chúng ta không xác định được hắn ta đang ở đâu, chúng ta nên hủy cuộc tấn công.
Dialogue: 0,0:13:21.46,0:13:23.47,Dialogue,,0000,0000,0000,,Cái gì?! \NJackson!
Dialogue: 0,0:13:26.64,0:13:29.10,Dialogue,,0000,0000,0000,,Nó không di chuyển tý gì cả.
Dialogue: 0,0:13:29.18,0:13:31.26,Dialogue,,0000,0000,0000,,Kể cả khi hắn ở trong thì sao ?
Dialogue: 0,0:13:31.35,0:13:34.60,Dialogue,,0000,0000,0000,,Chẳng sao cả, Bill . Tấn công đi!
Dialogue: 0,0:13:34.69,0:13:36.73,Dialogue,,0000,0000,0000,,Không cần phải nhắc.
Dialogue: 0,0:13:36.81,0:13:37.81,Dialogue,,0000,0000,0000,,Khi tôi ra hiệu thì...
Dialogue: 0,0:13:37.81,0:13:38.61,Dialogue,,0000,0000,0000,,Đừng !
Dialogue: 0,0:13:38.69,0:13:41.27,Dialogue,,0000,0000,0000,,Con AS đó rất nguy hiểm. Hãy nghe tôi...
Dialogue: 0,0:13:41.36,0:13:43.07,Dialogue,,0000,0000,0000,,Sao ngươi không câm miệng lại đi ?
Dialogue: 0,0:13:43.15,0:13:48.70,Dialogue,,0000,0000,0000,,Bill! Bọn chúng đang trong tầm bắn. Khoảng cách 750! Tọa độ 0-4-5.
Dialogue: 0,0:13:48.78,0:13:50.58,Dialogue,,0000,0000,0000,,Này! Sao chưa ra hiệu cho bọn tôi ?
Dialogue: 0,0:13:50.66,0:13:52.08,Dialogue,,0000,0000,0000,,Có chuyện gì thế, Bill ?!
Dialogue: 0,0:13:52.16,0:13:55.04,Dialogue,,0000,0000,0000,,Kế hoạch không thay đổi. Tấn công.
Dialogue: 0,0:13:54.16,0:13:55.04,Dialogue,,0000,0000,0000,,Đừng !
Dialogue: 0,0:13:55.12,0:13:58.33,Dialogue,,0000,0000,0000,,Hắn gần như đã giết tôi và đồng đội.
Dialogue: 0,0:13:58.42,0:14:00.04,Dialogue,,0000,0000,0000,,Nếu như ông xem thường hắn, tất cả chúng ta sẽ chết !
Dialogue: 0,0:14:00.13,0:14:02.63,Dialogue,,0000,0000,0000,,Bill ! Hãy để tôi bắn tên này trước !
Dialogue: 0,0:14:02.71,0:14:03.67,Dialogue,,0000,0000,0000,,Cậu nói cái quái gì thế ?!
Dialogue: 0,0:14:03.76,0:14:06.80,Dialogue,,0000,0000,0000,,Này, chúng ta đang làm gì thế ? Bọn chúng đang đi qua kìa.
Dialogue: 0,0:14:06.88,0:14:08.68,Dialogue,,0000,0000,0000,,Thiếu Úy ! Hãy ngừng cuộc tấn công !
Dialogue: 0,0:14:08.76,0:14:10.93,Dialogue,,0000,0000,0000,,Ông muốn hại chết người của mình sao ?
Dialogue: 0,0:14:14.14,0:14:16.73,Dialogue,,0000,0000,0000,,Khốn kiếp !
Dialogue: 0,0:14:22.57,0:14:23.69,Dialogue,,0000,0000,0000,,Bang!
Dialogue: 0,0:14:35.91,0:14:37.29,Dialogue,,0000,0000,0000,,Tấn công !
Dialogue: 0,0:14:39.04,0:14:40.21,Dialogue,,0000,0000,0000,,Thật ngu ngốc !
Dialogue: 0,0:14:43.05,0:14:46.05,Dialogue,,0000,0000,0000,,Batist sẽ chặn chúng lại ! Jackson sẽ nhử bọn chúng !
Dialogue: 0,0:14:46.13,0:14:49.51,Dialogue,,0000,0000,0000,,Andy sẽ phân tán sự chú ý của chúng! Gray và tôi sẽ tìm mục tiêu!
Dialogue: 0,0:14:58.64,0:14:59.81,Dialogue,,0000,0000,0000,,Mục tiêu đâu ?
Dialogue: 0,0:14:59.90,0:15:01.27,Dialogue,,0000,0000,0000,,Không thể thấy hắn!
Dialogue: 0,0:15:02.98,0:15:03.98,Dialogue,,0000,0000,0000,,Tôi cũng thế !
Dialogue: 0,0:15:04.07,0:15:04.86,Dialogue,,0000,0000,0000,,Batist!
Dialogue: 0,0:15:04.94,0:15:05.94,Dialogue,,0000,0000,0000,,Không thấy!
Dialogue: 0,0:15:06.03,0:15:08.53,Dialogue,,0000,0000,0000,,Khốn thật! Hắn trốn ở đâu chứ ?
Dialogue: 0,0:15:08.61,0:15:09.78,Dialogue,,0000,0000,0000,,Jackson?!
Dialogue: 0,0:15:11.16,0:15:14.95,Dialogue,,0000,0000,0000,,Tôi không muốn con cá nhỏ ! Con cá bự đâu rồi ?
Dialogue: 0,0:15:19.96,0:15:23.54,Dialogue,,0000,0000,0000,,Xin lỗi nhé, từ điểm này giao thông đã bị cấm.
Dialogue: 0,0:15:48.07,0:15:50.53,Dialogue,,0000,0000,0000,,Hắn đâu rồi ?
Dialogue: 0,0:15:50.61,0:15:52.16,Dialogue,,0000,0000,0000,,Có chuyện gì thế, Batist?!
Dialogue: 0,0:15:52.24,0:15:53.07,Dialogue,,0000,0000,0000,,Batist!
Dialogue: 0,0:15:53.16,0:15:55.33,Dialogue,,0000,0000,0000,,Cố lên, tôi sẽ đến đó ngay !
Dialogue: 0,0:15:57.87,0:15:59.00,Dialogue,,0000,0000,0000,,Cái gì ?
Dialogue: 0,0:16:15.51,0:16:19.14,Dialogue,,0000,0000,0000,,Yo, đằng ấy trông có vẻ vui nhỉ.
Dialogue: 0,0:16:28.86,0:16:30.03,Dialogue,,0000,0000,0000,,Không ổn rồi!
Dialogue: 0,0:16:34.82,0:16:35.70,Dialogue,,0000,0000,0000,,Batist!
Dialogue: 0,0:16:35.78,0:16:37.16,Dialogue,,0000,0000,0000,,Thằng khốn !
Dialogue: 0,0:16:40.00,0:16:42.96,Dialogue,,0000,0000,0000,,Cẩn thận. Hắn ta rất giỏi.
Dialogue: 0,0:16:44.17,0:16:46.13,Dialogue,,0000,0000,0000,,Đừng nói nữa. Tôi sẽ mang cậu ra ngay.
Dialogue: 0,0:16:57.81,0:17:01.56,Dialogue,,0000,0000,0000,,Cảm ơn nhé, nó giúp vai ta bớt tê cứng rồi.
Dialogue: 0,0:17:01.64,0:17:04.02,Dialogue,,0000,0000,0000,,Thế này là sao ? Rõ ràng mình đã bắn trúng hắn.
Dialogue: 0,0:17:04.10,0:17:06.69,Dialogue,,0000,0000,0000,,Đó là Lambda Driver ư ?
Dialogue: 0,0:17:07.86,0:17:08.94,Dialogue,,0000,0000,0000,,Đến đây nào!
Dialogue: 0,0:17:20.79,0:17:21.91,Dialogue,,0000,0000,0000,,Đi nào, Jackson!
Dialogue: 0,0:17:22.00,0:17:24.50,Dialogue,,0000,0000,0000,,Ờ, 4 đánh 1. Dễ ăn thôi !
Dialogue: 0,0:17:24.58,0:17:26.37,Dialogue,,0000,0000,0000,,Khoan đã ! Nhìn xem !
Dialogue: 0,0:17:26.46,0:17:28.13,Dialogue,,0000,0000,0000,,Gì thế, Gray ?
Dialogue: 0,0:17:28.21,0:17:30.00,Dialogue,,0000,0000,0000,,Lô hàng đó.
Dialogue: 0,0:17:31.46,0:17:34.01,Dialogue,,0000,0000,0000,,Đó là đầu đạn hạt nhân.
Dialogue: 0,0:17:34.09,0:17:36.63,Dialogue,,0000,0000,0000,,Buôn lậu ư ?
Dialogue: 0,0:17:47.90,0:17:52.28,Dialogue,,0000,0000,0000,,Yo, sao thế ? Đó là những gì ngươi có sao, tên chỉ huy vô dụng ?
Dialogue: 0,0:18:01.37,0:18:02.70,Dialogue,,0000,0000,0000,,Đi chết đi !
Dialogue: 0,0:18:49.88,0:18:51.46,Dialogue,,0000,0000,0000,,Thằng khốn!
Dialogue: 0,0:18:54.38,0:18:56.17,Dialogue,,0000,0000,0000,,Andy! Jackson!
Dialogue: 0,0:19:06.18,0:19:07.43,Dialogue,,0000,0000,0000,,Lùi lại !
Dialogue: 0,0:19:14.11,0:19:16.28,Dialogue,,0000,0000,0000,,Là ngươi! Kashim!
Dialogue: 0,0:19:17.78,0:19:19.49,Dialogue,,0000,0000,0000,,Mình có thể sử dụng không ?
Dialogue: 0,0:19:19.57,0:19:20.99,Dialogue,,0000,0000,0000,,Ngươi có thể sử dụng sao ?
Dialogue: 0,0:19:21.07,0:19:23.03,Dialogue,,0000,0000,0000,,Không, mình sẽ làm được!
Dialogue: 0,0:19:30.54,0:19:32.88,Dialogue,,0000,0000,0000,,KASHIM!
Dialogue: 0,0:19:32.96,0:19:35.34,Dialogue,,0000,0000,0000,,GAURON!
Dialogue: 0,0:20:04.20,0:20:06.37,Dialogue,,0000,0000,0000,,Bọn chúng đã lấy cắp lô hàng!
Dialogue: 0,0:20:06.45,0:20:09.45,Dialogue,,0000,0000,0000,,Nối liên lạc với Bộ Chỉ Huy Quân Sự Helmajistan cho ta !
Dialogue: 0,0:20:09.54,0:20:12.08,Dialogue,,0000,0000,0000,,Khốn kiếp! Di chuyển đi, đồ vô dụng...
Dialogue: 0,0:20:12.17,0:20:15.54,Dialogue,,0000,0000,0000,,Khốn kiếp ! Ngu ngốc !
Dialogue: 0,0:20:18.13,0:20:19.88,Dialogue,,0000,0000,0000,,Kashim...
Dialogue: 0,0:20:21.17,0:20:22.97,Dialogue,,0000,0000,0000,,Không được để chúng thoát!
Dialogue: 0,0:20:26.26,0:20:28.35,Dialogue,,0000,0000,0000,,Ráng lên, Batist !
Dialogue: 0,0:20:28.43,0:20:32.02,Dialogue,,0000,0000,0000,,Bây giờ chúng ta cần phải đem thứ này đi càng xa càng tốt.
Dialogue: 0,0:20:32.10,0:20:36.11,Dialogue,,0000,0000,0000,,Khốn kiếp! Bill đã... Bill đã...
Dialogue: 0,0:20:36.19,0:20:38.98,Dialogue,,0000,0000,0000,,Khốn kiếp !
Dialogue: 0,0:21:10.22,0:21:21.94,Songs (Romanji),,0000,0000,0000,,Kokoro ni chiisana hana ga saiteru
Dialogue: 0,0:21:22.03,0:21:33.12,Songs (Romanji),,0000,0000,0000,,Kimi kara moratta karenai hana ga
Dialogue: 0,0:21:33.21,0:21:39.13,Songs (Romanji),,0000,0000,0000,,Shinjiru koto mo kowagaranai kurai
Dialogue: 0,0:21:39.21,0:21:46.30,Songs (Romanji),,0000,0000,0000,,Tsuyoku nareta kara
Dialogue: 0,0:21:46.39,0:21:52.18,Songs (Romanji),,0000,0000,0000,,Kimi ni aete ureshikatta
Dialogue: 0,0:21:52.27,0:21:58.81,Songs (Romanji),,0000,0000,0000,,Tsunaida te ga hokoridatta
Dialogue: 0,0:21:58.90,0:22:05.40,Songs (Romanji),,0000,0000,0000,,Ima wa betsubetsu no sora miagete itemo
Dialogue: 0,0:22:05.49,0:22:14.16,Songs (Romanji),,0000,0000,0000,,Hora arukeru hitori demo
Dialogue: 0,0:21:10.22,0:21:21.94,Songs,,0000,0000,0000,,Bông hoa nhỏ trong tim em
Dialogue: 0,0:21:22.03,0:21:33.12,Songs,,0000,0000,0000,,Bông hoa không bao giờ tàn mà anh đã tặng em
Dialogue: 0,0:21:33.21,0:21:39.13,Songs,,0000,0000,0000,,Em không hề sợ hãi, thậm chí luôn tin tưởng
Dialogue: 0,0:21:39.21,0:21:46.30,Songs,,0000,0000,0000,,Đó là điều khiến em trở nên mạnh mẽ
Dialogue: 0,0:21:46.39,0:21:52.18,Songs,,0000,0000,0000,,Em rất hạnh phúc vì đã gặp anh
Dialogue: 0,0:21:52.27,0:21:58.81,Songs,,0000,0000,0000,,Em tự hào khi nắm tay anh
Dialogue: 0,0:21:58.90,0:22:05.40,Songs,,0000,0000,0000,,Dù cho hai ta hướng về bầu trời khác nhau
Dialogue: 0,0:22:05.49,0:22:14.16,Songs,,0000,0000,0000,,Anh thấy không, em có thể tự mình bước đi
Dialogue: 0,0:22:22.55,0:22:27.13,Dialogue,,0000,0000,0000,,"Bộ phim này hoàn toàn là hư cấu.\N Tên nhân vật và các tổ chức trong phim không liên quan đến bất cứ cá nhân, tổ chức nào."
Dialogue: 0,0:22:28.05,0:22:30.64,Dialogue,,0000,0000,0000,,Vũ khí khủng khiếp của kẻ thù... Cái chết của chỉ huy...
Dialogue: 0,0:22:30.72,0:22:34.93,Dialogue,,0000,0000,0000,,Trong khi kẻ thù đang tiếp cận chúng tôi, chúng tôi đã thực hiện cuộc hành hương ở nơi hoang dã tuyệt vọng.
Dialogue: 0,0:22:35.02,0:22:39.90,Dialogue,,0000,0000,0000,,Kì tới Full Metal Panic: tập 16, "Gió thổi nơi quê nhà, phần 2."
Dialogue: 0,0:22:39.98,0:22:43.44,Dialogue,,0000,0000,0000,,Tôi hiểu rồi. Đây là nhà của tôi.
Dialogue: 0,0:22:43.44,0:22:45.44,Dialogue,,0000,0000,0000,,
