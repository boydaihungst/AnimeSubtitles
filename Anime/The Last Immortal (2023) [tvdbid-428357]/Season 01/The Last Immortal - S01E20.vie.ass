Dialogue: 0,0:01:29.80,0:01:36.68,Default,,0,0,0,,CHUYỂN THỂ TỪ TIỂU THUYẾT CÙNG TÊN\NCỦA TINH LINH
Dialogue: 0,0:01:41.00,0:01:43.88,Default,,0,0,0,,Chúc mừng các vị vào được vòng tuyển chọn\Ncuối cùng của Vân tôn.
Dialogue: 0,0:01:43.96,0:01:47.64,Default,,0,0,0,,Vân tôn là một trong ngũ tôn Thiên giới,
Dialogue: 0,0:01:47.72,0:01:49.88,Default,,0,0,0,,là vị trí tối cao của Thiên giới.
Dialogue: 0,0:01:50.44,0:01:52.88,Default,,0,0,0,,Hôm nay Lan Phong đế quân\Ncó việc quan trọng khác
Dialogue: 0,0:01:52.96,0:01:54.24,Default,,0,0,0,,nên không tham gia đại điển,
Dialogue: 0,0:01:54.92,0:01:57.00,Default,,0,0,0,,ủy thác cho lão tiên tuyên bố thay.
Dialogue: 0,0:01:57.08,0:01:59.60,Default,,0,0,0,,Trước đó, ngài ấy\Nđã cùng tiên trưởng các nhà,
Dialogue: 0,0:01:59.68,0:02:01.08,Default,,0,0,0,,chưởng điện các ti
Dialogue: 0,0:02:01.16,0:02:02.64,Default,,0,0,0,,chọn ra đối tượng thích hợp,
Dialogue: 0,0:02:02.72,0:02:04.36,Default,,0,0,0,,bỏ vào trong đỉnh Càn Nguyên này.
Dialogue: 0,0:02:05.12,0:02:07.08,Default,,0,0,0,,Mong mọi người đừng trách.
Dialogue: 0,0:02:07.92,0:02:09.04,Default,,0,0,0,,Làm phiền tiên quân rồi.
Dialogue: 0,0:02:35.52,0:02:37.40,Default,,0,0,0,,Chúc mừng Mộ Nguyệt tiên quân.
Dialogue: 0,0:02:38.84,0:02:39.68,Default,,0,0,0,,Đa tạ.
Dialogue: 0,0:02:43.36,0:02:46.04,Default,,0,0,0,,- Cung nghênh Vân tôn mới nhậm chức!\N- Cung nghênh Vân tôn mới nhậm chức!
Dialogue: 0,0:02:49.08,0:02:50.20,Default,,0,0,0,,Chúc mừng.
Dialogue: 0,0:02:50.28,0:02:51.88,Default,,0,0,0,,Hoa Thù thay mặt điện Ti Lộc
Dialogue: 0,0:02:51.96,0:02:53.68,Default,,0,0,0,,sẽ cố hết sức phối hợp\Nvới công tác của Vân tôn,
Dialogue: 0,0:02:53.76,0:02:55.48,Default,,0,0,0,,cùng gìn giữ thái bình của Tiên giới.
Dialogue: 0,0:02:56.20,0:02:57.20,Default,,0,0,0,,Làm phiền điện hạ rồi.
Dialogue: 0,0:02:59.12,0:03:01.76,Default,,0,0,0,,ĐIỆN LĂNG VŨ
Dialogue: 0,0:03:01.84,0:03:02.92,Default,,0,0,0,,Hoa Thù điện hạ.
Dialogue: 0,0:03:03.52,0:03:04.88,Default,,0,0,0,,Lan Phong đế quân đi đâu rồi?
Dialogue: 0,0:03:05.40,0:03:06.64,Default,,0,0,0,,Đế quân…
Dialogue: 0,0:03:07.88,0:03:10.56,Default,,0,0,0,,Ngài… Ngài ấy không cho tiểu tiên\Nnói với người khác.
Dialogue: 0,0:03:11.12,0:03:12.00,Default,,0,0,0,,Người khác?
Dialogue: 0,0:03:12.56,0:03:14.76,Default,,0,0,0,,Ông quên quan hệ giữa điện hạ nhà ta\Nvà đế quân rồi phải không?
Dialogue: 0,0:03:14.84,0:03:16.44,Default,,0,0,0,,Tiểu tiên không dám.
Dialogue: 0,0:03:18.56,0:03:20.80,Default,,0,0,0,,Mấy ngày nay đế quân\Nluôn ở đài Thanh Long,
Dialogue: 0,0:03:21.36,0:03:22.40,Default,,0,0,0,,chưa hề quay về.
Dialogue: 0,0:03:22.48,0:03:23.48,Default,,0,0,0,,Đài Thanh Long?
Dialogue: 0,0:03:29.24,0:03:32.12,Default,,0,0,0,,Vì sao đài Thanh Long này\Nlại bị kết giới mây mù che phủ?
Dialogue: 0,0:03:32.60,0:03:34.44,Default,,0,0,0,,Rốt cuộc đế quân đã đi đâu?
Dialogue: 0,0:03:42.24,0:03:43.36,Default,,0,0,0,,Đế quân.
Dialogue: 0,0:03:43.44,0:03:44.96,Default,,0,0,0,,Tội sơ suất.
Dialogue: 0,0:03:45.52,0:03:47.12,Default,,0,0,0,,Công minh, chăm chỉ,
Dialogue: 0,0:03:47.76,0:03:49.40,Default,,0,0,0,,xem xét kỹ càng,
Dialogue: 0,0:03:50.76,0:03:52.16,Default,,0,0,0,,không làm được vậy
Dialogue: 0,0:03:52.88,0:03:54.64,Default,,0,0,0,,mà lại nhiều lần phạm lỗi.
Dialogue: 0,0:03:54.72,0:03:55.88,Default,,0,0,0,,Lan Phong
Dialogue: 0,0:03:55.96,0:03:58.12,Default,,0,0,0,,có mắt như mù, không nhìn ra sự thật
Dialogue: 0,0:03:59.20,0:04:00.08,Default,,0,0,0,,chính là
Dialogue: 0,0:04:01.12,0:04:02.28,Default,,0,0,0,,sơ suất.
Dialogue: 0,0:04:10.40,0:04:11.52,Default,,0,0,0,,Lan Phong
Dialogue: 0,0:04:11.60,0:04:13.84,Default,,0,0,0,,tự nhận tội phá hỏng tên Hộ Linh.
Dialogue: 0,0:04:14.32,0:04:15.36,Default,,0,0,0,,Chưa hành hình xong,
Dialogue: 0,0:04:15.92,0:04:17.36,Default,,0,0,0,,người khác không được tự ý vào.
Dialogue: 0,0:04:19.28,0:04:20.48,Default,,0,0,0,,Tội bao che.
Dialogue: 0,0:04:33.40,0:04:34.36,Default,,0,0,0,,Chẳng lẽ
Dialogue: 0,0:04:35.24,0:04:38.64,Default,,0,0,0,,đế quân đã biết\Nđiện hạ có liên quan đến việc này?
Dialogue: 0,0:04:38.72,0:04:39.64,Default,,0,0,0,,Lan Phong
Dialogue: 0,0:04:40.68,0:04:42.12,Default,,0,0,0,,che chở tình riêng,
Dialogue: 0,0:04:43.92,0:04:47.48,Default,,0,0,0,,chính là bao che.
Dialogue: 0,0:05:06.56,0:05:07.52,Default,,0,0,0,,Lan Phong,
Dialogue: 0,0:05:08.04,0:05:11.44,Default,,0,0,0,,ngài đã chịu phạt ba ngày,\Nchín chín tám mốt đòn cảnh cáo
Dialogue: 0,0:05:11.52,0:05:12.52,Default,,0,0,0,,đều đã chịu đủ.
Dialogue: 0,0:05:12.60,0:05:15.20,Default,,0,0,0,,Tất cả lỗi lầm tạm thời bỏ qua,
Dialogue: 0,0:05:15.28,0:05:18.64,Default,,0,0,0,,không cần phải quá tự trách bản thân,\Nlập tức quay về giữ chức.
Dialogue: 0,0:05:19.20,0:05:20.12,Default,,0,0,0,,Lan Phong
Dialogue: 0,0:05:20.92,0:05:24.20,Default,,0,0,0,,hổ thẹn với ấn tín đích truyền\Ncủa các đời thiên đế,
Dialogue: 0,0:05:25.04,0:05:26.88,Default,,0,0,0,,hổ thẹn với sự ủy thác của Phượng Uyên,
Dialogue: 0,0:05:28.24,0:05:29.96,Default,,0,0,0,,tự biết đức không xứng chức,
Dialogue: 0,0:05:30.44,0:05:31.80,Default,,0,0,0,,khó đảm đương trọng trách này.
Dialogue: 0,0:05:32.36,0:05:34.64,Default,,0,0,0,,Chờ đến lúc Phượng Uyên quay về,
Dialogue: 0,0:05:35.12,0:05:36.04,Default,,0,0,0,,Lan Phong…
Dialogue: 0,0:05:39.76,0:05:41.12,Default,,0,0,0,,sẽ tự xin từ chức.
Dialogue: 0,0:05:49.56,0:05:52.48,Default,,0,0,0,,ĐIỆN LĂNG VŨ, THIÊN CUNG, TIÊN GIỚI
Dialogue: 0,0:06:15.84,0:06:19.76,Default,,0,0,0,,LÀM NGƯỜI NGAY THẲNG
Dialogue: 0,0:06:19.84,0:06:22.40,Default,,0,0,0,,Vì sao ngài lại một mình\Nđi nhận tội khổ tu,
Dialogue: 0,0:06:22.48,0:06:24.16,Default,,0,0,0,,còn bảo người hầu giấu ta?
Dialogue: 0,0:06:31.16,0:06:32.92,Default,,0,0,0,,Gương Quan Thế này đã bị hỏng
Dialogue: 0,0:06:33.00,0:06:34.16,Default,,0,0,0,,thì cất đi đi.
Dialogue: 0,0:06:35.40,0:06:36.24,Default,,0,0,0,,Thù Nhi,
Dialogue: 0,0:06:38.80,0:06:40.08,Default,,0,0,0,,ta đã biết cả rồi.
Dialogue: 0,0:06:41.52,0:06:43.88,Default,,0,0,0,,Hôm đó ta đã thấy kỳ lạ rồi.
Dialogue: 0,0:06:45.48,0:06:47.12,Default,,0,0,0,,Gương Quan Thế đang yên đang lành
Dialogue: 0,0:06:48.20,0:06:50.04,Default,,0,0,0,,sao tự nhiên lại mất đi linh lực?
Dialogue: 0,0:06:51.60,0:06:52.56,Default,,0,0,0,,Thế là
Dialogue: 0,0:06:53.04,0:06:54.92,Default,,0,0,0,,ta đã tự kiểm tra kỹ lưỡng,
Dialogue: 0,0:06:55.00,0:06:56.20,Default,,0,0,0,,kết quả phát hiện
Dialogue: 0,0:06:57.20,0:06:58.48,Default,,0,0,0,,bên trên có một tia tiên lực
Dialogue: 0,0:06:59.00,0:07:00.72,Default,,0,0,0,,rất mỏng manh.
Dialogue: 0,0:07:02.64,0:07:04.28,Default,,0,0,0,,Tước Vũ Tịnh Thủy.
Dialogue: 0,0:07:05.08,0:07:06.64,Default,,0,0,0,,Ngài nghi ngờ ta?
Dialogue: 0,0:07:10.36,0:07:14.40,Default,,0,0,0,,Trên đời này vốn không có mấy pháp khí\Ncó thể xóa được gương Quan Thế.
Dialogue: 0,0:07:15.04,0:07:16.36,Default,,0,0,0,,Tước Vũ Tịnh Thủy
Dialogue: 0,0:07:17.00,0:07:18.48,Default,,0,0,0,,chính là một trong số đó.
Dialogue: 0,0:07:20.52,0:07:22.60,Default,,0,0,0,,Vật này vốn là bí bảo của tộc Khổng Tước,
Dialogue: 0,0:07:23.96,0:07:26.00,Default,,0,0,0,,không phải tiên yêu bình thường\Ncó thể có được.
Dialogue: 0,0:07:26.76,0:07:28.12,Default,,0,0,0,,Hơn nữa,
Dialogue: 0,0:07:28.20,0:07:29.40,Default,,0,0,0,,ở Thiên cung này,
Dialogue: 0,0:07:29.48,0:07:31.08,Default,,0,0,0,,còn có người nào ở tộc Khổng Tước
Dialogue: 0,0:07:32.84,0:07:34.12,Default,,0,0,0,,có thể có khả năng này?
Dialogue: 0,0:07:37.60,0:07:38.56,Default,,0,0,0,,Ta biết
Dialogue: 0,0:07:39.08,0:07:40.48,Default,,0,0,0,,muội xưa nay không thích A Âm,
Dialogue: 0,0:07:41.60,0:07:43.40,Default,,0,0,0,,thế nên muội mới tìm cơ hội
Dialogue: 0,0:07:43.48,0:07:45.16,Default,,0,0,0,,xóa bỏ hình ảnh trong gương,
Dialogue: 0,0:07:46.44,0:07:48.00,Default,,0,0,0,,để thuận nước đẩy thuyền,
Dialogue: 0,0:07:49.04,0:07:52.52,Default,,0,0,0,,đẩy hết tội lỗi trong chuyện này\Nlên người A Âm vốn đã bị nghi ngờ.
Dialogue: 0,0:08:03.08,0:08:04.08,Default,,0,0,0,,Nhưng mà Thù Nhi,
Dialogue: 0,0:08:05.12,0:08:06.60,Default,,0,0,0,,muội có biết muội làm như thế
Dialogue: 0,0:08:07.52,0:08:09.88,Default,,0,0,0,,sẽ khiến một tiên thị vô tội như cô ấy
Dialogue: 0,0:08:09.96,0:08:11.56,Default,,0,0,0,,phải chịu oan ức không?
Dialogue: 0,0:08:12.12,0:08:13.48,Default,,0,0,0,,Nếu không phải Cổ Tấn và A Âm
Dialogue: 0,0:08:13.56,0:08:16.20,Default,,0,0,0,,kịp thời tìm ra\Nngười tu ma phá hỏng tên Hộ Linh
Dialogue: 0,0:08:16.88,0:08:19.72,Default,,0,0,0,,thì việc này suýt nữa đã gây ra\Nchiến tranh giữa hai giới tiên, yêu.
Dialogue: 0,0:08:20.68,0:08:23.80,Default,,0,0,0,,Nếu ngài đã nghĩ như thế\Nthì sao không lệnh cho tam ti thẩm vấn ta?
Dialogue: 0,0:08:23.88,0:08:25.52,Default,,0,0,0,,Vì sao phải tự nhận tội chứ?
Dialogue: 0,0:08:26.08,0:08:27.60,Default,,0,0,0,,Sao ta nhẫn tâm thẩm vấn muội được?
Dialogue: 0,0:08:30.36,0:08:31.88,Default,,0,0,0,,Thực ra trước lúc đó,
Dialogue: 0,0:08:33.12,0:08:34.60,Default,,0,0,0,,ta đã thăm dò muội,
Dialogue: 0,0:08:34.68,0:08:35.80,Default,,0,0,0,,xác định trên người muội
Dialogue: 0,0:08:36.32,0:08:38.40,Default,,0,0,0,,không hề có dấu vết liên quan đến ma.
Dialogue: 0,0:08:40.32,0:08:41.52,Default,,0,0,0,,Ta biết, Thù Nhi,
Dialogue: 0,0:08:42.08,0:08:43.56,Default,,0,0,0,,muội không hề có ý đồ
Dialogue: 0,0:08:43.64,0:08:45.04,Default,,0,0,0,,với tên Hộ Linh,
Dialogue: 0,0:08:45.12,0:08:46.44,Default,,0,0,0,,chỉ là nhất thời hồ đồ
Dialogue: 0,0:08:46.52,0:08:47.84,Default,,0,0,0,,mới ra tay với A Âm.
Dialogue: 0,0:08:49.36,0:08:50.28,Default,,0,0,0,,Nếu vậy thì
Dialogue: 0,0:08:51.84,0:08:54.04,Default,,0,0,0,,ta hoàn toàn có thể kéo muội về.
Dialogue: 0,0:08:58.84,0:08:59.72,Default,,0,0,0,,Muội yên tâm,
Dialogue: 0,0:09:01.72,0:09:04.04,Default,,0,0,0,,ta sẽ không nói việc này với bất cứ ai.
Dialogue: 0,0:09:04.80,0:09:05.84,Default,,0,0,0,,Nhưng việc này
Dialogue: 0,0:09:06.80,0:09:07.88,Default,,0,0,0,,cũng đã khiến ta
Dialogue: 0,0:09:07.96,0:09:10.76,Default,,0,0,0,,phụ sự tin tưởng\Ncủa Phượng Uyên điện hạ đối với ta.
Dialogue: 0,0:09:11.32,0:09:13.08,Default,,0,0,0,,Ta lại không thể truy cứu việc này.
Dialogue: 0,0:09:13.80,0:09:15.48,Default,,0,0,0,,Thế nên tất cả tội lỗi
Dialogue: 0,0:09:16.44,0:09:17.76,Default,,0,0,0,,cứ để mình ta gánh vác.
Dialogue: 0,0:09:18.36,0:09:19.76,Default,,0,0,0,,Tất cả hình phạt phải chịu
Dialogue: 0,0:09:20.36,0:09:22.20,Default,,0,0,0,,do tội lỗi chúng ta phạm phải
Dialogue: 0,0:09:22.28,0:09:23.40,Default,,0,0,0,,cứ để ta…
Dialogue: 0,0:09:25.28,0:09:26.40,Default,,0,0,0,,nhận hết.
Dialogue: 0,0:09:32.72,0:09:33.68,Default,,0,0,0,,Thù Nhi.
Dialogue: 0,0:09:34.72,0:09:35.60,Default,,0,0,0,,Mấy năm nay,
Dialogue: 0,0:09:36.52,0:09:38.40,Default,,0,0,0,,muội vì huynh trưởng tư chất bình thường,
Dialogue: 0,0:09:39.08,0:09:40.12,Default,,0,0,0,,phụ thân tuổi cao
Dialogue: 0,0:09:41.00,0:09:42.64,Default,,0,0,0,,mà đã tốn rất nhiều tâm huyết,
Dialogue: 0,0:09:42.72,0:09:44.44,Default,,0,0,0,,trù tính cho tộc Khổng Tước rất nhiều.
Dialogue: 0,0:09:45.48,0:09:46.84,Default,,0,0,0,,Nếu ta không ở vị trí này,
Dialogue: 0,0:09:48.40,0:09:49.92,Default,,0,0,0,,nhất định sẽ san sẻ với muội.
Dialogue: 0,0:09:50.88,0:09:53.04,Default,,0,0,0,,Nhưng nếu ta đã nhận\Nvị trí quyền thiên đế này
Dialogue: 0,0:09:53.60,0:09:55.32,Default,,0,0,0,,thì việc gì cũng phải công bằng.
Dialogue: 0,0:09:57.36,0:09:58.20,Default,,0,0,0,,Thế nên,
Dialogue: 0,0:09:59.04,0:10:00.68,Default,,0,0,0,,trong cuộc bầu chọn ngũ tiên tôn,
Dialogue: 0,0:10:02.84,0:10:03.96,Default,,0,0,0,,ta chỉ có thể bỏ phiếu
Dialogue: 0,0:10:04.60,0:10:06.52,Default,,0,0,0,,cho tiên quân có đức hạnh hơn.
Dialogue: 0,0:10:08.48,0:10:10.60,Default,,0,0,0,,Ngài công bằng liêm chính như thế,
Dialogue: 0,0:10:10.68,0:10:12.64,Default,,0,0,0,,không cần ngài chịu phạt thay ta.
Dialogue: 0,0:10:13.28,0:10:15.16,Default,,0,0,0,,Ngài muốn phạt ta thế nào, ngài cứ nói,
Dialogue: 0,0:10:15.24,0:10:17.08,Default,,0,0,0,,dù thế nào ta cũng chịu được cả.
Dialogue: 0,0:10:18.44,0:10:19.76,Default,,0,0,0,,Nếu như ta phạt muội…
Dialogue: 0,0:10:22.88,0:10:24.68,Default,,0,0,0,,thành hôn với ta,
Dialogue: 0,0:10:34.72,0:10:35.56,Default,,0,0,0,,để ta
Dialogue: 0,0:10:37.04,0:10:38.76,Default,,0,0,0,,chăm sóc muội suốt đời, suốt kiếp,
Dialogue: 0,0:10:41.40,0:10:42.68,Default,,0,0,0,,muội có đồng ý không?
Dialogue: 0,0:10:44.20,0:10:45.16,Default,,0,0,0,,Ngài nói cái gì?
Dialogue: 0,0:10:46.60,0:10:48.88,Default,,0,0,0,,Ngài đã biết ta là người thế nào rồi,
Dialogue: 0,0:10:49.88,0:10:50.72,Default,,0,0,0,,vì sao…
Dialogue: 0,0:10:52.24,0:10:53.08,Default,,0,0,0,,Thù Nhi,
Dialogue: 0,0:10:54.64,0:10:55.92,Default,,0,0,0,,ta nói những điều này
Dialogue: 0,0:10:56.48,0:10:57.96,Default,,0,0,0,,không phải là để chỉ trích muội.
Dialogue: 0,0:11:00.44,0:11:01.92,Default,,0,0,0,,Ta chỉ mong muội
Dialogue: 0,0:11:02.00,0:11:03.36,Default,,0,0,0,,đừng ngụy trang bản thân nữa.
Dialogue: 0,0:11:07.52,0:11:09.28,Default,,0,0,0,,Người Lan Phong này yêu là muội,
Dialogue: 0,0:11:10.08,0:11:11.16,Default,,0,0,0,,toàn bộ con người muội,
Dialogue: 0,0:11:13.08,0:11:14.56,Default,,0,0,0,,bao gồm cả sự kiêu ngạo,
Dialogue: 0,0:11:14.64,0:11:15.56,Default,,0,0,0,,sự nhạy cảm,
Dialogue: 0,0:11:15.64,0:11:16.96,Default,,0,0,0,,sự bất an,
Dialogue: 0,0:11:17.04,0:11:19.28,Default,,0,0,0,,thậm chí là tất cả khuyết điểm\Ntrên người muội,
Dialogue: 0,0:11:19.36,0:11:20.60,Default,,0,0,0,,ta đều có thể chấp nhận.
Dialogue: 0,0:11:22.28,0:11:23.40,Default,,0,0,0,,Vui buồn hoạn nạn,
Dialogue: 0,0:11:24.04,0:11:25.20,Default,,0,0,0,,chúng ta cùng đối mặt.
Dialogue: 0,0:11:26.76,0:11:27.80,Default,,0,0,0,,Ta chỉ hy vọng
Dialogue: 0,0:11:27.88,0:11:29.44,Default,,0,0,0,,muội đừng giấu trong lòng,
Dialogue: 0,0:11:30.84,0:11:32.16,Default,,0,0,0,,một mình gánh vác mọi chuyện,
Dialogue: 0,0:11:33.32,0:11:34.60,Default,,0,0,0,,sống mệt mỏi như thế.
Dialogue: 0,0:11:36.12,0:11:37.72,Default,,0,0,0,,Yêu toàn bộ con người ta?
Dialogue: 0,0:11:43.80,0:11:45.24,Default,,0,0,0,,Ngài tưởng ngài lấy ta
Dialogue: 0,0:11:45.92,0:11:47.40,Default,,0,0,0,,là ta sẽ thay đổi sao?
Dialogue: 0,0:11:48.08,0:11:50.84,Default,,0,0,0,,Sau này ta sẽ mượn danh thiên hậu
Dialogue: 0,0:11:50.92,0:11:52.60,Default,,0,0,0,,bày mưu tính kế khắp nơi,
Dialogue: 0,0:11:52.68,0:11:54.60,Default,,0,0,0,,làm đủ việc chỉ vì lợi ích.
Dialogue: 0,0:11:55.16,0:11:56.00,Default,,0,0,0,,Vậy ta sẽ
Dialogue: 0,0:11:56.60,0:11:58.52,Default,,0,0,0,,dùng quyền lực của ta để ngăn cản muội,
Dialogue: 0,0:12:00.44,0:12:01.96,Default,,0,0,0,,tránh để muội lại hại người,
Dialogue: 0,0:12:02.96,0:12:04.00,Default,,0,0,0,,hại mình.
Dialogue: 0,0:12:10.12,0:12:12.04,Default,,0,0,0,,Vậy tốt nhất ngài nên yêu ta lâu một chút,
Dialogue: 0,0:12:13.24,0:12:15.28,Default,,0,0,0,,để tránh ta trở thành người quá xấu xa.
Dialogue: 0,0:12:15.80,0:12:18.08,Default,,0,0,0,,Yên tâm đi, có ta đây,
Dialogue: 0,0:12:20.56,0:12:22.08,Default,,0,0,0,,ta sẽ luôn kéo muội lại.
Dialogue: 0,0:12:39.36,0:12:41.04,Default,,0,0,0,,Ngươi còn đến tìm ta làm gì?
Dialogue: 0,0:12:42.12,0:12:43.88,Default,,0,0,0,,Lần trước giúp các ngươi\Ntráo đổi tên Hộ Linh,
Dialogue: 0,0:12:43.96,0:12:45.00,Default,,0,0,0,,ta suýt nữa đã bị phát hiện.
Dialogue: 0,0:12:45.96,0:12:48.36,Default,,0,0,0,,Bây giờ các ngươi đã lấy được\Nhạt giống hoa Thí Thần.
Dialogue: 0,0:12:48.92,0:12:50.68,Default,,0,0,0,,Sau này, dù xảy ra việc gì,
Dialogue: 0,0:12:51.68,0:12:53.48,Default,,0,0,0,,ta cũng tuyệt đối không tham gia nữa.
Dialogue: 0,0:12:53.56,0:12:54.40,Default,,0,0,0,,Sao thế?
Dialogue: 0,0:12:54.96,0:12:56.84,Default,,0,0,0,,Không sợ phượng hoàng nhỏ kia quay lại à?
Dialogue: 0,0:12:56.92,0:12:58.80,Default,,0,0,0,,Việc nên làm, ta đã làm cả rồi.
Dialogue: 0,0:13:00.08,0:13:01.08,Default,,0,0,0,,Cứ tiếp tục thế này,
Dialogue: 0,0:13:01.84,0:13:03.24,Default,,0,0,0,,không cần chờ cô ta quay lại,
Dialogue: 0,0:13:04.32,0:13:06.52,Default,,0,0,0,,ta đã bị Tiên giới xử lý rồi.
Dialogue: 0,0:13:07.24,0:13:08.08,Default,,0,0,0,,Được rồi.
Dialogue: 0,0:13:08.64,0:13:10.36,Default,,0,0,0,,Ta đồng ý cho ngươi rút lui.
Dialogue: 0,0:13:10.92,0:13:11.76,Default,,0,0,0,,Thế nhưng,
Dialogue: 0,0:13:12.72,0:13:14.88,Default,,0,0,0,,ngươi phải giúp ta làm một việc cuối cùng.
Dialogue: 0,0:13:15.88,0:13:16.96,Default,,0,0,0,,Xong việc này,
Dialogue: 0,0:13:17.92,0:13:19.72,Default,,0,0,0,,giữa chúng ta xem như chấm hết.
Dialogue: 0,0:13:27.12,0:13:28.04,Default,,0,0,0,,Rất đơn giản.
Dialogue: 0,0:13:29.56,0:13:32.16,Default,,0,0,0,,Ngươi chỉ cần dụ ba sư huynh đệ Nhàn Thiện
Dialogue: 0,0:13:32.24,0:13:33.68,Default,,0,0,0,,rời khỏi núi Đại Trạch là được.
Dialogue: 0,0:13:34.40,0:13:35.44,Default,,0,0,0,,Việc còn lại
Dialogue: 0,0:13:36.00,0:13:37.36,Default,,0,0,0,,ta sẽ tự tìm người làm.
Dialogue: 0,0:13:40.44,0:13:42.32,Default,,0,0,0,,ĐẢO NGÔ ĐỒNG, TIÊN GIỚI
Dialogue: 0,0:13:55.44,0:13:58.72,Default,,0,0,0,,NÚI ĐẠI TRẠCH, TIÊN GIỚI
Dialogue: 0,0:13:58.80,0:14:01.40,Default,,0,0,0,,Từ sau khi ô Già Thiên\Nbị Hoa Thù luyện hóa,
Dialogue: 0,0:14:01.48,0:14:02.72,Default,,0,0,0,,tiên mạch của núi Đại Trạch
Dialogue: 0,0:14:02.80,0:14:05.12,Default,,0,0,0,,luôn dựa vào linh lực mỏng manh\Ncủa kết giới bảo vệ.
Dialogue: 0,0:14:05.20,0:14:06.68,Default,,0,0,0,,Thời gian trước,
Dialogue: 0,0:14:06.76,0:14:08.24,Default,,0,0,0,,Nhàn Trúc bị thương,
Dialogue: 0,0:14:08.32,0:14:09.40,Default,,0,0,0,,hao tổn tiên lực,
Dialogue: 0,0:14:09.48,0:14:11.16,Default,,0,0,0,,thế nên việc thắp đèn Cửu Tinh
Dialogue: 0,0:14:11.24,0:14:12.36,Default,,0,0,0,,vẫn chưa thể bắt đầu.
Dialogue: 0,0:14:12.44,0:14:13.56,Default,,0,0,0,,Mà bây giờ,
Dialogue: 0,0:14:13.64,0:14:15.16,Default,,0,0,0,,sức khỏe của sư đệ đã khá hơn,
Dialogue: 0,0:14:15.24,0:14:17.40,Default,,0,0,0,,chúng ta phải lập tức\Nthắp đèn bảo vệ tiên mạch.
Dialogue: 0,0:14:17.48,0:14:19.16,Default,,0,0,0,,Ta đã xin Thiên cung cho nghỉ.
Dialogue: 0,0:14:19.24,0:14:21.96,Default,,0,0,0,,Lúc hai vị sư huynh thắp đèn,\Nta sẽ phụ trách bảo vệ sơn môn.
Dialogue: 0,0:14:23.40,0:14:24.32,Default,,0,0,0,,Sư phụ, sư thúc.
Dialogue: 0,0:14:27.56,0:14:29.56,Default,,0,0,0,,Tháp Trấn Hồn của Phượng Ẩn\Nxảy ra chuyện rồi.
Dialogue: 0,0:14:31.32,0:14:32.88,Default,,0,0,0,,Đến đảo Ngô Đồng trước đã.
Dialogue: 0,0:14:37.48,0:14:40.60,Default,,0,0,0,,ĐẢO NGÔ ĐỒNG, TIÊN GIỚI
Dialogue: 0,0:15:09.52,0:15:12.68,Default,,0,0,0,,Từ giờ Thìn hôm nay,\Ntháp Trấn Hồn đã không ngừng dao động.
Dialogue: 0,0:15:13.36,0:15:15.76,Default,,0,0,0,,Ta ở đây khôi phục cả buổi\Nvẫn không có hiệu quả,
Dialogue: 0,0:15:15.84,0:15:16.76,Default,,0,0,0,,thế nên
Dialogue: 0,0:15:16.84,0:15:19.24,Default,,0,0,0,,mới sai người đến núi Đại Trạch\Nxin các vị giúp đỡ.
Dialogue: 0,0:15:37.92,0:15:40.48,Default,,0,0,0,,Hóa ra tiên mạch của núi Đại Trạch ở đây.
Dialogue: 0,0:15:40.56,0:15:41.68,Default,,0,0,0,,NÚI ĐẠI TRẠCH, TIÊN GIỚI
Dialogue: 0,0:15:48.32,0:15:50.80,Default,,0,0,0,,Đúng là chưởng giáo núi Đại Trạch,
Dialogue: 0,0:15:50.88,0:15:52.56,Default,,0,0,0,,lá chắn lợi hại quá.
Dialogue: 0,0:15:53.88,0:15:55.28,Default,,0,0,0,,May mà ma tôn
Dialogue: 0,0:15:55.36,0:15:57.00,Default,,0,0,0,,đã cho ta một lá mật phù.
Dialogue: 0,0:16:27.64,0:16:28.48,Default,,0,0,0,,Phượng Minh trưởng lão,
Dialogue: 0,0:16:28.56,0:16:30.64,Default,,0,0,0,,sao tự nhiên tháp Trấn Hồn\Nlại chấn động thế?
Dialogue: 0,0:16:30.72,0:16:32.72,Default,,0,0,0,,Tiên nguyên của Phượng Ẩn rời đi quá lâu,
Dialogue: 0,0:16:32.80,0:16:34.88,Default,,0,0,0,,linh lực của tháp Trấn Hồn\Ncàng ngày càng yếu,
Dialogue: 0,0:16:34.96,0:16:36.32,Default,,0,0,0,,tích tụ từng ngày
Dialogue: 0,0:16:36.40,0:16:37.64,Default,,0,0,0,,mới gây ra họa này.
Dialogue: 0,0:16:39.52,0:16:40.76,Default,,0,0,0,,Vậy tháp Trấn Hồn này
Dialogue: 0,0:16:40.84,0:16:42.20,Default,,0,0,0,,còn cách cứu vãn không?
Dialogue: 0,0:16:42.96,0:16:44.64,Default,,0,0,0,,Phải có tám tiên nguyên của Phượng Ẩn
Dialogue: 0,0:16:45.20,0:16:46.80,Default,,0,0,0,,mới có thể ổn định được nó,
Dialogue: 0,0:16:47.56,0:16:48.52,Default,,0,0,0,,không thì chỉ sợ
Dialogue: 0,0:16:48.60,0:16:50.04,Default,,0,0,0,,chưa đến nửa ngày,
Dialogue: 0,0:16:50.12,0:16:51.80,Default,,0,0,0,,cơ thể Phượng Ẩn sẽ mục nát,
Dialogue: 0,0:16:52.36,0:16:54.16,Default,,0,0,0,,vĩnh viễn biến mất trong tam giới.
Dialogue: 0,0:16:59.28,0:17:00.56,Default,,0,0,0,,Phượng Minh huynh,
Dialogue: 0,0:17:00.64,0:17:01.80,Default,,0,0,0,,ngoài cách này ra
Dialogue: 0,0:17:01.88,0:17:04.60,Default,,0,0,0,,còn cách nào khác có thể tạm thời giữ được\Ncơ thể Phượng Ẩn không?
Dialogue: 0,0:17:04.68,0:17:05.76,Default,,0,0,0,,Còn một cách,
Dialogue: 0,0:17:07.20,0:17:08.16,Default,,0,0,0,,nhưng mà
Dialogue: 0,0:17:08.92,0:17:10.12,Default,,0,0,0,,chưa có ai từng thử.
Dialogue: 0,0:17:11.28,0:17:14.36,Default,,0,0,0,,Phải đưa hai tiên nguyên\Ncủa tiên quân khác
Dialogue: 0,0:17:14.44,0:17:16.40,Default,,0,0,0,,vào trong người Phượng Ẩn.
Dialogue: 0,0:17:16.48,0:17:17.64,Default,,0,0,0,,Trưởng lão, vậy để ta.
Dialogue: 0,0:17:17.72,0:17:18.68,Default,,0,0,0,,Không được.
Dialogue: 0,0:17:18.76,0:17:21.24,Default,,0,0,0,,Sư huynh phải chủ trì sơn môn,\Ncứ để ta làm.
Dialogue: 0,0:17:21.32,0:17:23.24,Default,,0,0,0,,Hai vị trưởng lão\Ndù sao cũng là người ngoài.
Dialogue: 0,0:17:24.08,0:17:26.04,Default,,0,0,0,,Phượng hoàng là\Nlãnh tụ của tộc Phượng chúng ta,
Dialogue: 0,0:17:26.12,0:17:28.56,Default,,0,0,0,,theo lý thì nên do ta hiến tế.
Dialogue: 0,0:17:28.64,0:17:30.32,Default,,0,0,0,,Mọi người cần gì tranh giành nhau?
Dialogue: 0,0:17:30.88,0:17:32.12,Default,,0,0,0,,Phượng Minh đang bị thương.
Dialogue: 0,0:17:32.20,0:17:34.80,Default,,0,0,0,,Nếu nhất định phải hiến tiên nguyên\Nthì Cổ Tấn bụng làm dạ chịu.
Dialogue: 0,0:17:34.88,0:17:36.48,Default,,0,0,0,,Không được. A Tấn.
Dialogue: 0,0:17:36.56,0:17:38.16,Default,,0,0,0,,Một khi hiến tiên nguyên
Dialogue: 0,0:17:38.24,0:17:39.60,Default,,0,0,0,,sẽ không tìm lại được,
Dialogue: 0,0:17:39.68,0:17:41.12,Default,,0,0,0,,đời này sẽ phải chịu nỗi khổ\Ntiên nguyên chấn động
Dialogue: 0,0:17:41.20,0:17:42.32,Default,,0,0,0,,vì tiên nguyên ly tán.
Dialogue: 0,0:17:42.40,0:17:43.92,Default,,0,0,0,,Cứ để ta và nhị sư huynh của đệ…
Dialogue: 0,0:17:44.00,0:17:45.24,Default,,0,0,0,,Ta biết hai vị sư huynh thương ta,
Dialogue: 0,0:17:45.84,0:17:48.36,Default,,0,0,0,,nhưng việc tiên nguyên Phượng Ẩn\Ntiêu tán vốn là tại ta,
Dialogue: 0,0:17:48.44,0:17:49.88,Default,,0,0,0,,để ta hiến tiên nguyên
Dialogue: 0,0:17:50.64,0:17:51.96,Default,,0,0,0,,cũng là một cách để bồi thường.
Dialogue: 0,0:18:01.56,0:18:02.88,Default,,0,0,0,,Đồ ăn lên đủ rồi.
Dialogue: 0,0:18:05.84,0:18:07.24,Default,,0,0,0,,Tiểu sư cô.
Dialogue: 0,0:18:07.32,0:18:08.16,Default,,0,0,0,,Thanh Y.
Dialogue: 0,0:18:08.24,0:18:09.32,Default,,0,0,0,,Sao ngươi lại đến đây?
Dialogue: 0,0:18:09.40,0:18:11.16,Default,,0,0,0,,Tháp… tháp Trấn Hồn xảy ra chuyện,
Dialogue: 0,0:18:11.24,0:18:12.64,Default,,0,0,0,,tiểu sư thúc muốn hiến tiên nguyên
Dialogue: 0,0:18:12.72,0:18:13.72,Default,,0,0,0,,để giữ lại cơ thể Phượng Ẩn.
Dialogue: 0,0:18:13.80,0:18:15.00,Default,,0,0,0,,Phượng Minh trưởng lão nói
Dialogue: 0,0:18:15.08,0:18:18.04,Default,,0,0,0,,muốn giữ được cơ thể Phượng Ẩn\Ncần tám tiên nguyên của cô ấy,
Dialogue: 0,0:18:18.12,0:18:20.16,Default,,0,0,0,,nhưng bây giờ\Ncòn thiếu hai tiên nguyên. Tiểu sư cô,
Dialogue: 0,0:18:20.24,0:18:22.72,Default,,0,0,0,,ta nhớ lần trước người nói\NU Minh giới có cây ngô đồng.
Dialogue: 0,0:18:22.80,0:18:24.80,Default,,0,0,0,,Mọi người có thể nghĩ cách\Nđi tìm U Minh vương,
Dialogue: 0,0:18:24.88,0:18:26.00,Default,,0,0,0,,lấy tiên nguyên trong tay ngài ấy không?
Dialogue: 0,0:18:26.08,0:18:28.20,Default,,0,0,0,,Không thì một khi tiểu sư thúc\Nhiến tiên nguyên,
Dialogue: 0,0:18:28.28,0:18:30.76,Default,,0,0,0,,tiên nguyên thiếu hụt\Nsẽ phải chịu đau đớn cả đời.
Dialogue: 0,0:18:31.32,0:18:32.96,Default,,0,0,0,,Thanh Y, ngươi đừng vội.
Dialogue: 0,0:18:34.12,0:18:36.60,Default,,0,0,0,,A Cửu, Yến Sảng,\Nhai người theo Thanh Y quay về,
Dialogue: 0,0:18:36.68,0:18:37.60,Default,,0,0,0,,nhất định phải ngăn cản A Tấn.
Dialogue: 0,0:18:37.68,0:18:39.00,Default,,0,0,0,,Được.
Dialogue: 0,0:18:39.56,0:18:40.72,Default,,0,0,0,,Ta sẽ đến U Minh giới.
Dialogue: 0,0:18:40.80,0:18:42.04,Default,,0,0,0,,Chờ đã.
Dialogue: 0,0:18:42.12,0:18:44.56,Default,,0,0,0,,Lần trước cô cứu đá Tam Sinh\Ncũng không lấy được tiên nguyên.
Dialogue: 0,0:18:44.64,0:18:45.84,Default,,0,0,0,,Lần này…
Dialogue: 0,0:18:45.92,0:18:47.00,Default,,0,0,0,,Ta có cách.
Dialogue: 0,0:18:47.08,0:18:47.96,Default,,0,0,0,,Ta đi với cô.
Dialogue: 0,0:18:48.60,0:18:49.52,Default,,0,0,0,,Không cần đâu.
Dialogue: 0,0:18:51.12,0:18:52.08,Default,,0,0,0,,Lần này,
Dialogue: 0,0:18:53.08,0:18:54.64,Default,,0,0,0,,chỉ ta mới có thể cứu huynh ấy.
Dialogue: 0,0:18:57.88,0:18:59.04,Default,,0,0,0,,Chúng ta phải nhanh lên,
Dialogue: 0,0:18:59.12,0:19:01.16,Default,,0,0,0,,không thì sẽ không kịp\Nngăn cản tiểu sư thúc.
Dialogue: 0,0:19:05.56,0:19:07.00,Default,,0,0,0,,U MINH GIỚI
Dialogue: 0,0:19:07.08,0:19:09.92,Default,,0,0,0,,Ta đồng ý dùng một nửa linh lực của ta\Nđổi lấy tiên nguyên của Phượng Ẩn.
Dialogue: 0,0:19:18.84,0:19:19.68,Default,,0,0,0,,Tiểu nha đầu,
Dialogue: 0,0:19:21.04,0:19:23.24,Default,,0,0,0,,cô đã biết\Nlinh lực nội đan của thú Thủy Ngưng
Dialogue: 0,0:19:23.32,0:19:24.52,Default,,0,0,0,,đại diện cho tuổi thọ,
Dialogue: 0,0:19:25.08,0:19:26.12,Default,,0,0,0,,mà cô vẫn đồng ý trao đổi sao?
Dialogue: 0,0:19:26.20,0:19:27.28,Default,,0,0,0,,Ta đồng ý.
Dialogue: 0,0:19:29.24,0:19:31.08,Default,,0,0,0,,Ngao Ca bệ hạ chẳng phải cũng vì Tu Ngôn
Dialogue: 0,0:19:31.16,0:19:33.32,Default,,0,0,0,,mà dốc hết tâm sức đấy sao?
Dialogue: 0,0:19:42.36,0:19:43.20,Default,,0,0,0,,Cô biết
Dialogue: 0,0:19:43.88,0:19:45.36,Default,,0,0,0,,mình đang nói gì không?
Dialogue: 0,0:19:45.44,0:19:47.12,Default,,0,0,0,,U Minh vương uy chấn tam giới,
Dialogue: 0,0:19:47.20,0:19:48.56,Default,,0,0,0,,nếu không phải ngài cho phép,
Dialogue: 0,0:19:48.64,0:19:51.28,Default,,0,0,0,,ai lại dám bán lệnh bài vào cung điện\Nở Tu Ngôn lâu?
Dialogue: 0,0:19:51.36,0:19:53.16,Default,,0,0,0,,Hôm đó ta đã gặp Tu Ngôn,
Dialogue: 0,0:19:53.24,0:19:54.84,Default,,0,0,0,,linh lực của hắn yếu vô cùng,
Dialogue: 0,0:19:55.40,0:19:57.80,Default,,0,0,0,,mà thú Thủy Ngưng bọn ta\Nlại có khả năng khôi phục.
Dialogue: 0,0:19:57.88,0:20:00.40,Default,,0,0,0,,Ngao Ca bệ hạ\Nthu thập bảo vật ở Tu Ngôn lâu,
Dialogue: 0,0:20:00.48,0:20:02.56,Default,,0,0,0,,lại hết lòng hết sức\Nmuốn có được linh lực của ta,
Dialogue: 0,0:20:02.64,0:20:04.72,Default,,0,0,0,,chắc hẳn là vì Tu Ngôn phải không?
Dialogue: 0,0:20:16.80,0:20:17.64,Default,,0,0,0,,Tiểu cô nương,
Dialogue: 0,0:20:20.96,0:20:22.32,Default,,0,0,0,,cuối cùng cô vẫn đến.
Dialogue: 0,0:20:33.12,0:20:34.12,Default,,0,0,0,,Cô làm thế này,
Dialogue: 0,0:20:34.68,0:20:36.40,Default,,0,0,0,,sư huynh cô không đau lòng sao?
Dialogue: 0,0:20:37.24,0:20:39.12,Default,,0,0,0,,Mạng ta vốn do huynh ấy thức tỉnh,
Dialogue: 0,0:20:39.20,0:20:40.36,Default,,0,0,0,,ta cũng bằng lòng…
Dialogue: 0,0:20:43.08,0:20:44.92,Default,,0,0,0,,giúp huynh ấy hoàn thành nguyện vọng này.
Dialogue: 0,0:21:16.44,0:21:17.40,Default,,0,0,0,,Bây giờ
Dialogue: 0,0:21:18.04,0:21:20.04,Default,,0,0,0,,chắc đã trồng\Nhạt giống hoa Thí Thần rồi nhỉ?
Dialogue: 0,0:22:59.36,0:23:01.32,Default,,0,0,0,,- A Tấn.\N- A Tấn. Đệ không sao chứ?
Dialogue: 0,0:23:01.40,0:23:02.32,Default,,0,0,0,,Ta không sao, sư huynh.
Dialogue: 0,0:23:02.40,0:23:04.08,Default,,0,0,0,,Chút đau đớn này ta chịu được, sư huynh.
Dialogue: 0,0:23:04.68,0:23:05.52,Default,,0,0,0,,Tiếp tục.
Dialogue: 0,0:23:15.60,0:23:16.44,Default,,0,0,0,,Dừng tay.
Dialogue: 0,0:23:18.00,0:23:18.84,Default,,0,0,0,,- A Tấn.\N- A Tấn.
Dialogue: 0,0:23:18.92,0:23:20.00,Default,,0,0,0,,A Tấn.
Dialogue: 0,0:23:22.36,0:23:24.28,Default,,0,0,0,,Yến Sảng điện hạ. Hai người có ý gì?
Dialogue: 0,0:23:24.84,0:23:26.88,Default,,0,0,0,,Cổ Tấn, A Âm biết\Nhuynh muốn hiến tiên nguyên,
Dialogue: 0,0:23:26.96,0:23:28.96,Default,,0,0,0,,bảo bọn ta nhất định phải đến\Ncản huynh lại.
Dialogue: 0,0:23:29.04,0:23:30.92,Default,,0,0,0,,Nếu không phải A Âm một hai nhờ vả
Dialogue: 0,0:23:31.00,0:23:32.12,Default,,0,0,0,,thì ta sẽ không đến cứu ngươi đâu.
Dialogue: 0,0:23:32.20,0:23:34.12,Default,,0,0,0,,Thuật pháp này\Nnếu tự tiện dừng giữa chừng,
Dialogue: 0,0:23:34.20,0:23:35.44,Default,,0,0,0,,không nhanh chóng tiếp tục
Dialogue: 0,0:23:35.52,0:23:36.72,Default,,0,0,0,,thì e là…
Dialogue: 0,0:23:37.36,0:23:38.68,Default,,0,0,0,,công sức trước đó xem như bỏ.
Dialogue: 0,0:23:39.24,0:23:40.84,Default,,0,0,0,,Ta đến để cắt ngang mà.
Dialogue: 0,0:23:40.92,0:23:42.24,Default,,0,0,0,,A Âm đã dặn dò như vậy.
Dialogue: 0,0:23:42.32,0:23:43.44,Default,,0,0,0,,Còn A Âm thì sao?
Dialogue: 0,0:23:43.52,0:23:44.44,Default,,0,0,0,,Muội ấy đang ở đâu?
Dialogue: 0,0:23:44.52,0:23:47.28,Default,,0,0,0,,Cô ấy nói mình có cách\Nnên đã một mình đến U Minh giới.
Dialogue: 0,0:23:49.36,0:23:52.08,Default,,0,0,0,,Ngươi biết cách A Âm nói là gì không?
Dialogue: 0,0:23:52.88,0:23:54.08,Default,,0,0,0,,Nguy rồi.
Dialogue: 0,0:23:54.16,0:23:55.04,Default,,0,0,0,,A Tấn.
Dialogue: 0,0:24:13.24,0:24:14.84,Default,,0,0,0,,A Âm, thế nào?
Dialogue: 0,0:24:21.24,0:24:24.00,Default,,0,0,0,,Phiền ngài mau đưa\Ntiên nguyên Phượng Ẩn cho ta,
Dialogue: 0,0:24:24.48,0:24:26.12,Default,,0,0,0,,ta phải mang nó đến đảo Ngô Đồng.
Dialogue: 0,0:24:26.20,0:24:28.36,Default,,0,0,0,,Nếu tiên nguyên của A Tấn\Nnhập vào tháp Trấn Hồn
Dialogue: 0,0:24:28.92,0:24:30.16,Default,,0,0,0,,thì không kịp nữa đâu.
Dialogue: 0,0:24:30.24,0:24:32.20,Default,,0,0,0,,Ngô đồng ở U Minh giới\Nkhông giống những nơi khác,
Dialogue: 0,0:24:32.72,0:24:33.64,Default,,0,0,0,,phải lấy từ từ.
Dialogue: 0,0:24:34.20,0:24:37.04,Default,,0,0,0,,Đợi ta lấy xong\Nsẽ dùng thuật dịch chuyển của U Minh giới
Dialogue: 0,0:24:37.12,0:24:38.24,Default,,0,0,0,,đưa cô đến đảo Ngô Đồng,
Dialogue: 0,0:24:38.80,0:24:39.88,Default,,0,0,0,,nhất định sẽ đến kịp.
Dialogue: 0,0:24:49.36,0:24:50.24,Default,,0,0,0,,Đa tạ.
Dialogue: 0,0:24:54.32,0:24:55.16,Default,,0,0,0,,A Âm.
Dialogue: 0,0:24:55.80,0:24:56.64,Default,,0,0,0,,Để cảm ơn,
Dialogue: 0,0:24:57.36,0:24:58.60,Default,,0,0,0,,ta có món quà muốn tặng cô.
Dialogue: 0,0:25:28.36,0:25:29.68,Default,,0,0,0,,Ta thành hạ quân rồi.
Dialogue: 0,0:25:29.76,0:25:32.20,Default,,0,0,0,,Nhưng tu luyện tiên lực\Nvẫn phải thuận theo số trời,
Dialogue: 0,0:25:32.28,0:25:33.76,Default,,0,0,0,,nên ta chỉ có thể giúp cô đến đây thôi.
Dialogue: 0,0:25:33.84,0:25:35.68,Default,,0,0,0,,Nhưng nếu ngày sau A Âm còn cần gì thêm,
Dialogue: 0,0:25:35.76,0:25:37.64,Default,,0,0,0,,Tu Ngôn nhất định dốc sức giúp đỡ.
Dialogue: 0,0:25:40.12,0:25:41.28,Default,,0,0,0,,Đa tạ Ngao Ca bệ hạ.
Dialogue: 0,0:25:43.52,0:25:44.84,Default,,0,0,0,,Cô gọi ta là gì?
Dialogue: 0,0:25:50.40,0:25:52.44,Default,,0,0,0,,Ta biết ngài chính là Ngao Ca bệ hạ.
Dialogue: 0,0:25:54.68,0:25:56.68,Default,,0,0,0,,Thú Thủy Ngưng bọn ta\Ndùng linh lực cứu người
Dialogue: 0,0:25:57.28,0:25:58.64,Default,,0,0,0,,sẽ để lại khí tức.
Dialogue: 0,0:26:00.16,0:26:01.92,Default,,0,0,0,,Trước đây lúc ở Tu Ngôn lâu,
Dialogue: 0,0:26:02.68,0:26:04.12,Default,,0,0,0,,ta từng truyền linh lực
Dialogue: 0,0:26:04.20,0:26:05.40,Default,,0,0,0,,cho Tu Ngôn lâu chủ.
Dialogue: 0,0:26:15.40,0:26:16.24,Default,,0,0,0,,Tiểu nha đầu,
Dialogue: 0,0:26:16.88,0:26:18.68,Default,,0,0,0,,cô đã biết\Nlinh lực nội đan của thú Thủy Ngưng
Dialogue: 0,0:26:18.76,0:26:20.48,Default,,0,0,0,,đại diện cho tuổi thọ,
Dialogue: 0,0:26:20.56,0:26:22.28,Default,,0,0,0,,mà cô vẫn đồng ý trao đổi sao?
Dialogue: 0,0:26:23.84,0:26:25.68,Default,,0,0,0,,Lúc đó trên chiếc nhẫn ngọc màu đỏ
Dialogue: 0,0:26:26.28,0:26:27.56,Default,,0,0,0,,có khí tức của ta để lại.
Dialogue: 0,0:26:32.32,0:26:34.44,Default,,0,0,0,,Chắc chắn chiếc nhẫn ấy\Nkhông thể có hai chiếc.
Dialogue: 0,0:26:34.52,0:26:35.64,Default,,0,0,0,,Nên ta biết ngay
Dialogue: 0,0:26:36.76,0:26:38.00,Default,,0,0,0,,ngài là Ngao Ca bệ hạ.
Dialogue: 0,0:26:39.04,0:26:40.48,Default,,0,0,0,,Tiểu nha đầu đúng là lanh lợi.
Dialogue: 0,0:26:41.20,0:26:42.12,Default,,0,0,0,,Cả vạn năm nay,
Dialogue: 0,0:26:42.60,0:26:44.20,Default,,0,0,0,,cô là tiên quân đầu tiên phát hiện
Dialogue: 0,0:26:45.64,0:26:46.64,Default,,0,0,0,,chi tiết này đấy.
Dialogue: 0,0:26:47.72,0:26:48.92,Default,,0,0,0,,Đúng vậy,
Dialogue: 0,0:26:49.52,0:26:51.00,Default,,0,0,0,,ta thật sự là Ngao Ca.
Dialogue: 0,0:26:53.64,0:26:54.56,Default,,0,0,0,,Nhưng đồng thời,
Dialogue: 0,0:26:55.12,0:26:56.44,Default,,0,0,0,,ta cũng là Tu Ngôn.
Dialogue: 0,0:26:56.52,0:26:57.60,Default,,0,0,0,,Mười một vạn năm trước,
Dialogue: 0,0:26:58.32,0:27:00.48,Default,,0,0,0,,ta và Ngao Ca ra đời\Nở Thần giới thượng cổ,
Dialogue: 0,0:27:00.56,0:27:02.28,Default,,0,0,0,,vốn là một cặp huynh đệ song sinh.
Dialogue: 0,0:27:02.36,0:27:03.80,Default,,0,0,0,,Mệnh của Ngao Ca là sinh,
Dialogue: 0,0:27:04.60,0:27:05.44,Default,,0,0,0,,của ta là diệt.
Dialogue: 0,0:27:05.52,0:27:06.80,Default,,0,0,0,,Ta là Tu Ngôn.
Dialogue: 0,0:27:07.92,0:27:09.32,Default,,0,0,0,,Ta là Ngao Ca.
Dialogue: 0,0:27:09.40,0:27:10.68,Default,,0,0,0,,- Xin hứa đời này hết lòng vì tam giới,\N- Xin hứa đời này hết lòng vì tam giới,
Dialogue: 0,0:27:10.76,0:27:12.24,Default,,0,0,0,,- hy sinh vì bách tính,\N- hy sinh vì bách tính,
Dialogue: 0,0:27:12.32,0:27:13.72,Default,,0,0,0,,- bảo vệ thái bình muôn đời.\N- bảo vệ thái bình muôn đời.
Dialogue: 0,0:27:13.80,0:27:15.56,Default,,0,0,0,,Thần giới chỉ định ta làm U Minh vương,
Dialogue: 0,0:27:16.20,0:27:18.24,Default,,0,0,0,,trở thành người dẫn đường nơi suối vàng.
Dialogue: 0,0:27:18.32,0:27:19.68,Default,,0,0,0,,Còn Ngao Ca làm chủ Thiên cung,
Dialogue: 0,0:27:20.28,0:27:21.32,Default,,0,0,0,,thống lĩnh Thiên giới.
Dialogue: 0,0:27:23.04,0:27:23.88,Default,,0,0,0,,Sau đó,
Dialogue: 0,0:27:24.48,0:27:26.92,Default,,0,0,0,,đại chiến Phục Ma bảy vạn năm trước nổ ra,
Dialogue: 0,0:27:27.48,0:27:30.96,Default,,0,0,0,,ma thần Minh Khởi cùng chúng ma công phá\Nphong ấn của Cửu Uyên Sát Ngục.
Dialogue: 0,0:27:31.84,0:27:33.96,Default,,0,0,0,,Còn Đế Quyến và Nghi Hợp chân thần
Dialogue: 0,0:27:34.04,0:27:36.12,Default,,0,0,0,,đúng lúc đang xuống trần lịch kiếp,
Dialogue: 0,0:27:36.20,0:27:37.80,Default,,0,0,0,,đều không ở Thần giới thượng cổ.
Dialogue: 0,0:27:38.84,0:27:40.48,Default,,0,0,0,,Chỉ có ta và Ngao Ca
Dialogue: 0,0:27:40.56,0:27:43.00,Default,,0,0,0,,thống lĩnh hàng vạn thần tướng\Nxuống hạ giới dẹp loạn.
Dialogue: 0,0:27:43.08,0:27:44.12,Default,,0,0,0,,Ngu xuẩn.
Dialogue: 0,0:27:45.40,0:27:48.96,Default,,0,0,0,,Hai tân thần cỏn con\Nmà cũng muốn ngăn cản ta ư?
Dialogue: 0,0:27:49.88,0:27:51.20,Default,,0,0,0,,Chịu chết đi.
Dialogue: 0,0:28:02.84,0:28:03.92,Default,,0,0,0,,Ngao Ca.
Dialogue: 0,0:28:33.12,0:28:34.24,Default,,0,0,0,,Tu Ngôn.
Dialogue: 0,0:28:34.32,0:28:35.72,Default,,0,0,0,,Hãy sống thật tốt.
Dialogue: 0,0:28:35.80,0:28:36.84,Default,,0,0,0,,Đi đi!
Dialogue: 0,0:28:42.60,0:28:43.60,Default,,0,0,0,,Phép Binh Giải?
Dialogue: 0,0:28:44.16,0:28:45.48,Default,,0,0,0,,Chư thần ngủ say chưa tỉnh,
Dialogue: 0,0:28:45.96,0:28:47.96,Default,,0,0,0,,tam giới chỉ còn hai bọn ta bảo vệ,
Dialogue: 0,0:28:48.04,0:28:50.24,Default,,0,0,0,,ta tuyệt đối sẽ không để ngươi\Ntàn sát tam giới.
Dialogue: 0,0:28:52.56,0:28:53.44,Default,,0,0,0,,Cuối cùng,
Dialogue: 0,0:28:53.52,0:28:55.88,Default,,0,0,0,,ta dùng phép Binh Giải\Nphong ấn Cửu Uyên lần nữa.
Dialogue: 0,0:28:56.84,0:28:57.68,Default,,0,0,0,,Tu Ngôn.
Dialogue: 0,0:28:58.28,0:28:59.44,Default,,0,0,0,,Tu Ngôn!
Dialogue: 0,0:29:08.32,0:29:09.24,Default,,0,0,0,,Tu Ngôn!
Dialogue: 0,0:29:09.32,0:29:11.80,Default,,0,0,0,,Nhưng cái giá là nội đan của ta\Ntiêu tán khắp thế gian.
Dialogue: 0,0:29:12.84,0:29:15.04,Default,,0,0,0,,Sau khi Ngao Ca tìm được\Nmảnh vỡ nội đan của ta
Dialogue: 0,0:29:15.12,0:29:17.00,Default,,0,0,0,,đã không tiếc xông vào điện Sinh Tử
Dialogue: 0,0:29:17.48,0:29:18.72,Default,,0,0,0,,trộm sổ sinh tử vì ta,
Dialogue: 0,0:29:19.56,0:29:22.20,Default,,0,0,0,,rồi tìm được Nghi Hợp chân thần\Nđang lịch kiếp ở nhân gian,
Dialogue: 0,0:29:22.88,0:29:24.20,Default,,0,0,0,,cầu xin người
Dialogue: 0,0:29:24.28,0:29:26.84,Default,,0,0,0,,dùng sức mạnh Hỗn Độn\Ngiúp ta ngưng tụ mảnh vỡ nội đan.
Dialogue: 0,0:29:28.40,0:29:29.60,Default,,0,0,0,,Nghi Hợp chân thần,
Dialogue: 0,0:29:30.08,0:29:31.36,Default,,0,0,0,,xin người hãy cứu Tu Ngôn.
Dialogue: 0,0:29:32.88,0:29:34.80,Default,,0,0,0,,Huynh đệ song sinh các ngươi
Dialogue: 0,0:29:34.88,0:29:36.40,Default,,0,0,0,,ra đời ở đài Càn Khôn,
Dialogue: 0,0:29:36.48,0:29:38.72,Default,,0,0,0,,chức trách cũng do trời sắp đặt.
Dialogue: 0,0:29:38.80,0:29:40.04,Default,,0,0,0,,Ngươi mệnh sinh,
Dialogue: 0,0:29:40.12,0:29:41.04,Default,,0,0,0,,hắn mệnh tử.
Dialogue: 0,0:29:41.60,0:29:43.52,Default,,0,0,0,,Ngươi là Đế tinh thiên đế,
Dialogue: 0,0:29:43.60,0:29:45.68,Default,,0,0,0,,sinh ra đã nắm giữ ấn thiên đế.
Dialogue: 0,0:29:45.76,0:29:46.96,Default,,0,0,0,,Còn Tu Ngôn
Dialogue: 0,0:29:47.04,0:29:49.72,Default,,0,0,0,,thì trông coi việc\Nlịch kiếp độ ách của tam giới.
Dialogue: 0,0:29:49.80,0:29:51.36,Default,,0,0,0,,Nếu ta dùng sức mạnh Hỗn Độn
Dialogue: 0,0:29:51.44,0:29:52.84,Default,,0,0,0,,giúp Tu Ngôn sống lại,
Dialogue: 0,0:29:53.68,0:29:55.36,Default,,0,0,0,,vậy thì trong suốt mấy vạn năm
Dialogue: 0,0:29:55.44,0:29:57.80,Default,,0,0,0,,thậm chí là mấy chục vạn năm
Dialogue: 0,0:29:57.88,0:30:00.00,Default,,0,0,0,,hắn nuôi dưỡng thần lực và sống lại,
Dialogue: 0,0:30:00.08,0:30:04.16,Default,,0,0,0,,đài Càn Khôn sẽ không sinh ra\Nngười dẫn đường lịch kiếp mới.
Dialogue: 0,0:30:05.12,0:30:07.44,Default,,0,0,0,,Không ai cai quản việc lịch kiếp độ ách
Dialogue: 0,0:30:07.52,0:30:08.60,Default,,0,0,0,,thì tam giới,
Dialogue: 0,0:30:08.68,0:30:09.84,Default,,0,0,0,,ngay cả Thần giới
Dialogue: 0,0:30:10.60,0:30:11.84,Default,,0,0,0,,đều sẽ đại loạn.
Dialogue: 0,0:30:12.56,0:30:13.80,Default,,0,0,0,,Chân thần,
Dialogue: 0,0:30:13.88,0:30:16.36,Default,,0,0,0,,vậy ta có thể thay huynh ấy\Nlàm người dẫn đường lịch kiếp không?
Dialogue: 0,0:30:16.44,0:30:17.72,Default,,0,0,0,,Ta và Tu Ngôn là huynh đệ song sinh,
Dialogue: 0,0:30:17.80,0:30:20.64,Default,,0,0,0,,nếu ta nuôi dưỡng nội đan của huynh ấy\Nthì không đến ngàn năm,
Dialogue: 0,0:30:20.72,0:30:22.32,Default,,0,0,0,,thần trí của Tu Ngôn sẽ tỉnh lại.
Dialogue: 0,0:30:22.80,0:30:23.64,Default,,0,0,0,,Đến lúc đó huynh ấy có thể
Dialogue: 0,0:30:23.72,0:30:25.28,Default,,0,0,0,,dùng thân xác của ta\Nđể cai quản U Minh giới.
Dialogue: 0,0:30:25.96,0:30:29.24,Default,,0,0,0,,Vì bọn ta là song sinh\Nnên căn nguyên thần lực giống nhau.
Dialogue: 0,0:30:29.76,0:30:31.88,Default,,0,0,0,,Ngao Ca liền dùng cơ thể mình làm vật chứa
Dialogue: 0,0:30:31.96,0:30:33.28,Default,,0,0,0,,để Nghi Hợp chân thần
Dialogue: 0,0:30:33.36,0:30:35.60,Default,,0,0,0,,đưa mảnh vỡ nội đan của ta\Nvào trong cơ thể đệ ấy.
Dialogue: 0,0:30:36.80,0:30:37.76,Default,,0,0,0,,Từ đó,
Dialogue: 0,0:30:38.28,0:30:39.88,Default,,0,0,0,,bọn ta một cơ thể hai người sống.
Dialogue: 0,0:30:41.84,0:30:43.72,Default,,0,0,0,,Nhưng vì ta là\Nngười dẫn đường ở suối vàng,
Dialogue: 0,0:30:44.24,0:30:46.48,Default,,0,0,0,,thời gian phục hồi nội đan\Ndài đằng đẵng này
Dialogue: 0,0:30:46.56,0:30:48.00,Default,,0,0,0,,không ai dẫn đường ở suối vàng.
Dialogue: 0,0:30:48.08,0:30:49.48,Default,,0,0,0,,Tham kiến bệ hạ.
Dialogue: 0,0:30:49.56,0:30:52.00,Default,,0,0,0,,Vì thế Ngao Ca tự nguyện từ bỏ\Nthân phận thiên đế
Dialogue: 0,0:30:52.08,0:30:53.24,Default,,0,0,0,,để đến U Minh giới
Dialogue: 0,0:30:53.88,0:30:55.52,Default,,0,0,0,,thay ta làm U Minh vương.
Dialogue: 0,0:30:58.00,0:31:00.00,Default,,0,0,0,,Vì phục hồi nội đan\Ncần lượng lớn linh lực,
Dialogue: 0,0:31:00.56,0:31:02.52,Default,,0,0,0,,Ngao Ca bèn xây dựng Tu Ngôn lâu,
Dialogue: 0,0:31:02.60,0:31:04.12,Default,,0,0,0,,dùng lệnh bài vào cung
Dialogue: 0,0:31:04.20,0:31:06.68,Default,,0,0,0,,để đổi kỳ trân\Nlinh lực dồi dào trong tam giới,
Dialogue: 0,0:31:07.24,0:31:09.44,Default,,0,0,0,,rồi dùng nó nuôi dưỡng\Nmảnh vỡ nội đan cho ta.
Dialogue: 0,0:31:10.64,0:31:12.56,Default,,0,0,0,,Nếu không nhờ cây ngô đồng này
Dialogue: 0,0:31:13.12,0:31:13.96,Default,,0,0,0,,thì e là
Dialogue: 0,0:31:14.92,0:31:16.56,Default,,0,0,0,,hai bọn ta đã không trụ được từ lâu.
Dialogue: 0,0:31:34.00,0:31:36.56,Default,,0,0,0,,Giờ A Âm\Ncũng có người mình muốn bảo vệ rồi.
Dialogue: 0,0:31:44.88,0:31:47.44,Default,,0,0,0,,CỬU UYÊN SÁT NGỤC
Dialogue: 0,0:31:50.84,0:31:52.08,Default,,0,0,0,,Đã bảy vạn năm rồi,
Dialogue: 0,0:31:53.40,0:31:54.96,Default,,0,0,0,,tam giới vật đổi sao dời…
Dialogue: 0,0:31:55.04,0:31:55.88,Default,,0,0,0,,MA THẦN MINH KHỞI
Dialogue: 0,0:31:55.96,0:31:57.04,Default,,0,0,0,,…mà thái độ của ngươi
Dialogue: 0,0:31:57.64,0:31:59.60,Default,,0,0,0,,vẫn chẳng mảy may thay đổi, Tu Ngôn.
Dialogue: 0,0:32:03.12,0:32:04.28,Default,,0,0,0,,Mới bảy vạn năm thôi mà.
Dialogue: 0,0:32:06.36,0:32:07.20,Default,,0,0,0,,Chúng ta
Dialogue: 0,0:32:08.36,0:32:09.84,Default,,0,0,0,,sẽ ở đây mãi mãi.
Dialogue: 0,0:32:10.44,0:32:11.88,Default,,0,0,0,,Ngươi thì cam lòng rồi,
Dialogue: 0,0:32:12.92,0:32:14.56,Default,,0,0,0,,chỉ khổ thân cho đệ đệ của ngươi.
Dialogue: 0,0:32:17.20,0:32:18.04,Default,,0,0,0,,Ta nghe nói
Dialogue: 0,0:32:18.12,0:32:20.96,Default,,0,0,0,,hắn đã hao tổn cả vạn năm\Nđể khôi phục nội đan cho ngươi
Dialogue: 0,0:32:22.08,0:32:24.80,Default,,0,0,0,,mà không biết mảnh vỡ nội đan của ngươi\Nnằm ở chỗ ta.
Dialogue: 0,0:32:25.80,0:32:28.72,Default,,0,0,0,,Để phong ấn ta\Nmà ngươi chôn vùi cả cuộc đời mình,
Dialogue: 0,0:32:29.68,0:32:31.88,Default,,0,0,0,,còn hy sinh vạn năm thời gian của đệ đệ,
Dialogue: 0,0:32:33.08,0:32:34.36,Default,,0,0,0,,có đáng không?
Dialogue: 0,0:32:35.28,0:32:38.24,Default,,0,0,0,,Bảo vệ tam giới vốn là\Nsứ mệnh của hai huynh đệ ta.
Dialogue: 0,0:32:39.48,0:32:41.08,Default,,0,0,0,,Ta tin đổi lại là Ngao Ca,
Dialogue: 0,0:32:42.36,0:32:43.44,Default,,0,0,0,,đệ ấy cũng sẽ làm thế.
Dialogue: 0,0:32:43.52,0:32:44.80,Default,,0,0,0,,Ta những tưởng
Dialogue: 0,0:32:44.88,0:32:46.20,Default,,0,0,0,,Thần giới toàn là
Dialogue: 0,0:32:46.28,0:32:48.64,Default,,0,0,0,,lũ đạo đức giả, tham sống sợ chết,
Dialogue: 0,0:32:49.80,0:32:52.56,Default,,0,0,0,,nhưng không ngờ\Ncòn có hạng người thoát tục như ngươi.
Dialogue: 0,0:32:53.20,0:32:55.64,Default,,0,0,0,,Còn biết sử dụng thần pháp như Binh Giải.
Dialogue: 0,0:32:56.56,0:32:57.40,Default,,0,0,0,,Tu Ngôn,
Dialogue: 0,0:32:58.04,0:32:59.36,Default,,0,0,0,,bảy vạn năm rồi,
Dialogue: 0,0:33:01.72,0:33:02.80,Default,,0,0,0,,tam giới…
Dialogue: 0,0:33:05.08,0:33:06.52,Default,,0,0,0,,đã quên chúng ta lâu rồi.
Dialogue: 0,0:33:14.04,0:33:15.88,Default,,0,0,0,,Vì tam giới mà ngươi nói,
Dialogue: 0,0:33:15.96,0:33:18.04,Default,,0,0,0,,nội đan tiêu tán bảy vạn năm,
Dialogue: 0,0:33:18.12,0:33:20.88,Default,,0,0,0,,nhưng tam giới có được mấy người\Nnhớ công lao của ngươi?
Dialogue: 0,0:33:21.76,0:33:23.36,Default,,0,0,0,,Chẳng thà ngươi thả ta ra
Dialogue: 0,0:33:24.52,0:33:26.84,Default,,0,0,0,,để chúng làm quen lại từ đầu.
Dialogue: 0,0:33:26.92,0:33:28.56,Default,,0,0,0,,Ta đã giúp ngươi tái tạo thân xác,
Dialogue: 0,0:33:29.56,0:33:30.64,Default,,0,0,0,,chỉ cần ngươi ra ngoài,
Dialogue: 0,0:33:31.20,0:33:34.00,Default,,0,0,0,,hợp làm một với mảnh vỡ nội đan\NNgao Ca ngưng tụ
Dialogue: 0,0:33:35.48,0:33:37.32,Default,,0,0,0,,là có thể vẹn nguyên như ban đầu,
Dialogue: 0,0:33:37.88,0:33:40.48,Default,,0,0,0,,làm chí tôn tam giới lần nữa.
Dialogue: 0,0:33:49.32,0:33:50.52,Default,,0,0,0,,Ma thần,
Dialogue: 0,0:33:51.08,0:33:52.76,Default,,0,0,0,,ngươi có sức mạnh vượt ngoài sinh tử,
Dialogue: 0,0:33:54.28,0:33:56.16,Default,,0,0,0,,chỉ dùng mảnh vỡ nội đan
Dialogue: 0,0:33:56.24,0:33:57.84,Default,,0,0,0,,đã có thể giúp ta đúc lại thân xác.
Dialogue: 0,0:33:59.24,0:34:00.44,Default,,0,0,0,,Ngươi mạnh đến vậy,
Dialogue: 0,0:34:01.24,0:34:03.12,Default,,0,0,0,,làm sao ta dám thả ngươi ra ngoài.
Dialogue: 0,0:34:04.84,0:34:07.44,Default,,0,0,0,,Vả lại ta không quan tâm\Ntam giới có nhớ tới ta hay không,
Dialogue: 0,0:34:08.96,0:34:10.08,Default,,0,0,0,,ta chỉ quan tâm
Dialogue: 0,0:34:10.64,0:34:12.44,Default,,0,0,0,,ta có thể phong ấn kết giới này hay không.
Dialogue: 0,0:34:15.00,0:34:17.76,Default,,0,0,0,,Thêm được ngày nào hay ngày ấy.
Dialogue: 0,0:34:49.80,0:34:52.12,Default,,0,0,0,,Bẩm báo bệ hạ, Cổ Tấn đại náo tiền điện.
Dialogue: 0,0:34:53.24,0:34:54.08,Default,,0,0,0,,Ngao Ca.
Dialogue: 0,0:34:55.76,0:34:56.72,Default,,0,0,0,,Ngao Ca đâu?
Dialogue: 0,0:34:57.36,0:34:58.68,Default,,0,0,0,,Gọi hắn ra đây.
Dialogue: 0,0:34:58.76,0:34:59.88,Default,,0,0,0,,Điếc hết rồi à?
Dialogue: 0,0:34:59.96,0:35:01.36,Default,,0,0,0,,Ngao Ca, ra đây cho ta.
Dialogue: 0,0:35:01.44,0:35:02.40,Default,,0,0,0,,A Tấn.
Dialogue: 0,0:35:04.04,0:35:05.48,Default,,0,0,0,,A Âm.
Dialogue: 0,0:35:05.56,0:35:06.76,Default,,0,0,0,,A Âm.
Dialogue: 0,0:35:08.56,0:35:09.84,Default,,0,0,0,,Muội không sao chứ?
Dialogue: 0,0:35:12.24,0:35:13.64,Default,,0,0,0,,Ta lấy được tiên nguyên của Phượng Ẩn rồi.
Dialogue: 0,0:35:14.76,0:35:16.32,Default,,0,0,0,,Mang đến tháp Trấn Hồn ngay đi.
Dialogue: 0,0:35:16.40,0:35:18.72,Default,,0,0,0,,Ngao Ca bệ hạ không làm khó ta,
Dialogue: 0,0:35:18.80,0:35:19.96,Default,,0,0,0,,còn giúp ta thăng cấp nữa.
Dialogue: 0,0:35:23.00,0:35:24.20,Default,,0,0,0,,A Âm.
Dialogue: 0,0:35:26.60,0:35:27.44,Default,,0,0,0,,A Âm.
Dialogue: 0,0:35:29.80,0:35:30.76,Default,,0,0,0,,Để hắn đi đi.
Dialogue: 0,0:35:42.08,0:35:42.92,Default,,0,0,0,,A Âm.
Dialogue: 0,0:35:45.16,0:35:46.00,Default,,0,0,0,,A Âm.
Dialogue: 0,0:35:46.08,0:35:48.04,Default,,0,0,0,,CUNG CHUNG LINH
Dialogue: 0,0:35:48.60,0:35:50.68,Default,,0,0,0,,Có phải ta từng dặn muội\Nđừng dùng linh lực nội đan của mình
Dialogue: 0,0:35:50.76,0:35:51.60,Default,,0,0,0,,để đổi lấy tiên nguyên không?
Dialogue: 0,0:35:52.08,0:35:53.12,Default,,0,0,0,,Tại sao muội cứ không nghe chứ?
Dialogue: 0,0:35:53.68,0:35:55.24,Default,,0,0,0,,Cứ xem như ta trả ơn huynh
Dialogue: 0,0:35:56.28,0:35:57.92,Default,,0,0,0,,vì đã đưa ta ra khỏi Cấm cốc,
Dialogue: 0,0:35:58.48,0:35:59.40,Default,,0,0,0,,nuôi dạy ta.
Dialogue: 0,0:36:00.44,0:36:01.88,Default,,0,0,0,,Những gì huynh nợ Phượng Ẩn đảo Ngô Đồng,
Dialogue: 0,0:36:02.44,0:36:03.36,Default,,0,0,0,,ta thay huynh trả.
Dialogue: 0,0:36:03.44,0:36:04.72,Default,,0,0,0,,Nhưng muội không phải Bích Ba.
Dialogue: 0,0:36:05.52,0:36:07.56,Default,,0,0,0,,Muội không thể sống ngàn vạn năm\Nnhư hắn được.
Dialogue: 0,0:36:07.64,0:36:09.68,Default,,0,0,0,,Muội có biết mất một nửa tuổi thọ\Ncó nghĩa là gì không?
Dialogue: 0,0:36:09.76,0:36:10.60,Default,,0,0,0,,Ta biết.
Dialogue: 0,0:36:11.16,0:36:12.16,Default,,0,0,0,,Nhưng ta tính rồi,
Dialogue: 0,0:36:13.28,0:36:14.32,Default,,0,0,0,,vẫn còn 50 năm,
Dialogue: 0,0:36:14.80,0:36:17.04,Default,,0,0,0,,đủ để làm việc mà ta muốn làm rồi.
Dialogue: 0,0:36:21.48,0:36:23.40,Default,,0,0,0,,Chuyện đã tới nước này, muội yên tâm,
Dialogue: 0,0:36:23.92,0:36:25.52,Default,,0,0,0,,dù ta có lật tung cả tam giới
Dialogue: 0,0:36:25.60,0:36:27.48,Default,,0,0,0,,cũng phải tìm bằng được\Ncách kéo dài tuổi thọ cho muội.
Dialogue: 0,0:36:32.76,0:36:34.24,Default,,0,0,0,,Hôm ấy thần quân
Dialogue: 0,0:36:35.36,0:36:36.88,Default,,0,0,0,,tự tay xé đứt tơ tình
Dialogue: 0,0:36:39.80,0:36:41.76,Default,,0,0,0,,là ta đã hiểu tâm ý của ngài rồi,
Dialogue: 0,0:36:41.84,0:36:43.20,Default,,0,0,0,,cũng không định đeo bám nữa.
Dialogue: 0,0:36:45.08,0:36:46.80,Default,,0,0,0,,Mang tiên nguyên Phượng Ẩn về
Dialogue: 0,0:36:49.64,0:36:51.36,Default,,0,0,0,,không phải vì muốn ngài mang nợ ta,
Dialogue: 0,0:36:53.00,0:36:54.84,Default,,0,0,0,,cũng không phải muốn\Nmượn chuyện này để níu giữ ngài.
Dialogue: 0,0:37:00.44,0:37:01.80,Default,,0,0,0,,Ngài nên mau đến đảo Ngô…
Dialogue: 0,0:37:05.60,0:37:06.92,Default,,0,0,0,,A Âm.
Dialogue: 0,0:37:07.76,0:37:10.52,Default,,0,0,0,,NÚI ĐẠI TRẠCH, TIÊN GIỚI
Dialogue: 0,0:37:22.76,0:37:23.84,Default,,0,0,0,,A Tấn,
Dialogue: 0,0:37:23.92,0:37:25.36,Default,,0,0,0,,rốt cuộc chuyện này là sao?
Dialogue: 0,0:37:28.84,0:37:30.00,Default,,0,0,0,,A Âm…
Dialogue: 0,0:37:31.88,0:37:34.56,Default,,0,0,0,,Vì muốn lấy hai mảnh\Ntiên nguyên của Phượng Ẩn
Dialogue: 0,0:37:35.68,0:37:38.08,Default,,0,0,0,,mà A Âm đã dùng một nửa linh lực
Dialogue: 0,0:37:38.60,0:37:40.52,Default,,0,0,0,,nội đan của mình\Ntrao đổi với U Minh vương,
Dialogue: 0,0:37:41.32,0:37:42.88,Default,,0,0,0,,tổn hao mất một nửa tuổi thọ.
Dialogue: 0,0:37:42.96,0:37:44.12,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:37:47.24,0:37:48.20,Default,,0,0,0,,Sư huynh,
Dialogue: 0,0:37:48.68,0:37:50.48,Default,,0,0,0,,có khi nào vì lý do này mà A Âm…
Dialogue: 0,0:37:50.56,0:37:51.40,Default,,0,0,0,,- Cổ Tấn.\N- A Cửu.
Dialogue: 0,0:37:51.48,0:37:52.56,Default,,0,0,0,,- A Cửu.\N- A Cửu.
Dialogue: 0,0:37:52.64,0:37:54.16,Default,,0,0,0,,Ngươi biết phía U Minh vương\Nđòi điều kiện đó từ đầu
Dialogue: 0,0:37:54.72,0:37:55.96,Default,,0,0,0,,mà sao không nói cho bọn ta biết sớm?
Dialogue: 0,0:37:56.96,0:37:59.00,Default,,0,0,0,,Có phải ngươi cố tình diễn khổ nhục kế
Dialogue: 0,0:37:59.48,0:38:01.48,Default,,0,0,0,,để dụ A Âm đi trao đổi linh lực không?
Dialogue: 0,0:38:01.56,0:38:02.68,Default,,0,0,0,,A Cửu.
Dialogue: 0,0:38:02.76,0:38:04.12,Default,,0,0,0,,- Nói đi chứ.\N- A Cửu.
Dialogue: 0,0:38:15.04,0:38:15.88,Default,,0,0,0,,Sư huynh.
Dialogue: 0,0:38:17.08,0:38:18.48,Default,,0,0,0,,Giờ ta chỉ muốn biết
Dialogue: 0,0:38:19.84,0:38:22.40,Default,,0,0,0,,có cách nào có thể để ta giúp A Âm
Dialogue: 0,0:38:22.48,0:38:24.16,Default,,0,0,0,,kéo dài mạng sống trong 50 năm không.
Dialogue: 0,0:38:24.76,0:38:25.88,Default,,0,0,0,,Sợ là A Âm
Dialogue: 0,0:38:27.32,0:38:28.60,Default,,0,0,0,,không còn 50 năm nữa rồi.
Dialogue: 0,0:38:30.00,0:38:31.76,Default,,0,0,0,,Sư huynh, huynh nói vậy là ý gì?
Dialogue: 0,0:38:32.72,0:38:33.56,Default,,0,0,0,,A Tấn,
Dialogue: 0,0:38:34.56,0:38:35.56,Default,,0,0,0,,đệ đã bao giờ nghĩ
Dialogue: 0,0:38:36.04,0:38:37.96,Default,,0,0,0,,thú Thủy Ngưng\Nđã tuyệt tích suốt sáu vạn năm,
Dialogue: 0,0:38:38.52,0:38:40.72,Default,,0,0,0,,tại sao A Âm lại xuất hiện\Nở Cấm cốc sau núi chúng ta không?
Dialogue: 0,0:38:41.56,0:38:42.52,Default,,0,0,0,,Với lại,
Dialogue: 0,0:38:43.60,0:38:44.88,Default,,0,0,0,,vì sao trứng thú Thủy Ngưng
Dialogue: 0,0:38:45.56,0:38:47.84,Default,,0,0,0,,lại không nở suốt sáu vạn năm?
Dialogue: 0,0:38:49.60,0:38:51.64,Default,,0,0,0,,Cuộc đại chiến Phục Ma\Nbảy vạn năm trước đó,
Dialogue: 0,0:38:52.28,0:38:54.44,Default,,0,0,0,,rất nhiều tiên thú không may bị diệt tộc,
Dialogue: 0,0:38:55.00,0:38:56.72,Default,,0,0,0,,thú Thủy Ngưng là một trong số đó.
Dialogue: 0,0:38:57.44,0:38:58.40,Default,,0,0,0,,Năm đó,
Dialogue: 0,0:38:59.12,0:39:02.96,Default,,0,0,0,,cha mẹ A Âm gửi gắm A Âm và muội muội\Nvẫn chưa ra khỏi vỏ cho sư tôn
Dialogue: 0,0:39:03.04,0:39:04.40,Default,,0,0,0,,rồi bỏ đi diệt ma,
Dialogue: 0,0:39:04.48,0:39:06.00,Default,,0,0,0,,không còn quay về nữa.
Dialogue: 0,0:39:08.04,0:39:10.36,Default,,0,0,0,,Thế vì sao sư tôn
Dialogue: 0,0:39:10.44,0:39:11.68,Default,,0,0,0,,không để họ giáng thế?
Dialogue: 0,0:39:13.20,0:39:15.12,Default,,0,0,0,,Đây là ý nguyện của cha mẹ A Âm.
Dialogue: 0,0:39:16.48,0:39:20.48,Default,,0,0,0,,Năm đó, lúc mẫu thân A Âm mang thai bọn họ\Nđã bị tộc Ma đả thương.
Dialogue: 0,0:39:21.04,0:39:23.76,Default,,0,0,0,,Sau đó, tuy đã gắng gượng\Nsinh được A Âm và muội muội cô ấy,
Dialogue: 0,0:39:24.32,0:39:26.80,Default,,0,0,0,,nhưng thực ra tiên nguyên của hai người họ\Nđã bị tộc Ma làm tổn thương,
Dialogue: 0,0:39:27.44,0:39:28.72,Default,,0,0,0,,rất khó ra khỏi vỏ.
Dialogue: 0,0:39:29.76,0:39:31.68,Default,,0,0,0,,Tuy về sau A Âm may mắn chào đời
Dialogue: 0,0:39:32.32,0:39:33.88,Default,,0,0,0,,nhưng tuổi thọ của cô ấy
Dialogue: 0,0:39:35.68,0:39:37.44,Default,,0,0,0,,nhiều nhất cũng chỉ được mười năm.
Dialogue: 0,0:39:38.00,0:39:39.08,Default,,0,0,0,,Mười năm ư?
Dialogue: 0,0:39:40.28,0:39:41.96,Default,,0,0,0,,Mười năm…
Dialogue: 0,0:39:53.00,0:39:54.20,Default,,0,0,0,,Mười năm…
Dialogue: 0,0:40:01.28,0:40:02.24,Default,,0,0,0,,Mười năm.
Dialogue: 0,0:40:03.40,0:40:04.60,Default,,0,0,0,,Nên để cô ấy chào đời,
Dialogue: 0,0:40:05.24,0:40:07.24,Default,,0,0,0,,ngắm nhìn thế gian này rồi chết đi
Dialogue: 0,0:40:08.04,0:40:09.92,Default,,0,0,0,,hay nên để cô ấy mãi mãi ngủ say,
Dialogue: 0,0:40:10.64,0:40:12.80,Default,,0,0,0,,cha mẹ của A Âm không thể quyết định,
Dialogue: 0,0:40:13.40,0:40:15.12,Default,,0,0,0,,bèn để ý trời định đoạt thay.
Dialogue: 0,0:40:16.16,0:40:18.48,Default,,0,0,0,,Bọn họ xin sư tôn phong ấn A Âm ở hậu cốc.
Dialogue: 0,0:40:18.96,0:40:21.56,Default,,0,0,0,,Nếu số kiếp định sẵn\Ncô ấy có thể phá vỏ mà ra
Dialogue: 0,0:40:22.16,0:40:23.36,Default,,0,0,0,,thì tức là cô bé này
Dialogue: 0,0:40:23.84,0:40:25.84,Default,,0,0,0,,nên có một cuộc đời ngắn ngủi,
Dialogue: 0,0:40:26.48,0:40:29.36,Default,,0,0,0,,cơ duyên kiếp này thuận theo ý trời.
Dialogue: 0,0:40:35.24,0:40:36.44,Default,,0,0,0,,Mười năm…
Dialogue: 0,0:40:37.24,0:40:39.04,Default,,0,0,0,,A Âm đã dâng mất năm năm tuổi thọ,
Dialogue: 0,0:40:39.60,0:40:41.56,Default,,0,0,0,,đã sống trên đời hơn bốn năm,
Dialogue: 0,0:40:43.28,0:40:44.64,Default,,0,0,0,,cũng có nghĩa là…
Dialogue: 0,0:40:46.92,0:40:48.56,Default,,0,0,0,,A Âm chỉ còn lại
Dialogue: 0,0:40:49.76,0:40:51.56,Default,,0,0,0,,chưa đầy một năm nữa.
Dialogue: 0,0:40:51.64,0:40:52.48,Default,,0,0,0,,Ta không tin.
Dialogue: 0,0:40:53.04,0:40:54.12,Default,,0,0,0,,Không thể nào.
Dialogue: 0,0:40:54.60,0:40:56.52,Default,,0,0,0,,Chẳng lẽ không còn cách nào khác\Ncứu được cô ấy sao?
Dialogue: 0,0:40:59.04,0:41:01.20,Default,,0,0,0,,Tiên thú muốn vượt qua\Nxiềng xích của tuổi thọ
Dialogue: 0,0:41:02.12,0:41:03.52,Default,,0,0,0,,chỉ có hóa tiên thành thần.
Dialogue: 0,0:41:04.44,0:41:06.24,Default,,0,0,0,,Hóa thần thì chắc chắn là không kịp.
Dialogue: 0,0:41:07.20,0:41:09.24,Default,,0,0,0,,Tiên thể của thú Thủy Ngưng\Nmong manh yếu ớt,
Dialogue: 0,0:41:09.84,0:41:13.20,Default,,0,0,0,,chỉ e đó là số phận tự nhiên\Ncủa thú Thủy Ngưng rồi.
Dialogue: 0,0:41:13.92,0:41:15.44,Default,,0,0,0,,Nhưng ta không tin vào số phận.
Dialogue: 0,0:41:15.52,0:41:17.48,Default,,0,0,0,,A Âm đã có thể xuất hiện ngược với lẽ trời
Dialogue: 0,0:41:18.04,0:41:19.32,Default,,0,0,0,,thì ta cũng sẽ tìm được cách
Dialogue: 0,0:41:20.52,0:41:21.52,Default,,0,0,0,,có thể cứu muội ấy.
Dialogue: 0,0:41:21.60,0:41:22.92,Default,,0,0,0,,Đúng vậy, sư tôn.
Dialogue: 0,0:41:23.00,0:41:25.40,Default,,0,0,0,,Có biết bao là sách cổ,\Nnhất định sẽ tìm được cách mà.
Dialogue: 0,0:41:27.76,0:41:31.00,Default,,0,0,0,,Trong sách không có,\Nta và Nhàn Trúc đã lục tung hết rồi.
Dialogue: 0,0:41:31.08,0:41:33.24,Default,,0,0,0,,Trong sách không có\Nkhông có nghĩa là không còn lối thoát.
Dialogue: 0,0:41:38.00,0:41:38.96,Default,,0,0,0,,Bích Ba.
Dialogue: 0,0:41:40.84,0:41:41.88,Default,,0,0,0,,Giống như Bích Ba vậy,
Dialogue: 0,0:41:42.60,0:41:44.16,Default,,0,0,0,,chẳng phải Bích Ba\Nlà trường hợp đặc biệt sao?
Dialogue: 0,0:41:44.64,0:41:45.88,Default,,0,0,0,,Tuy tộc thú Thủy Ngưng đã diệt vong
Dialogue: 0,0:41:45.96,0:41:49.76,Default,,0,0,0,,nhưng trong tam giới này vẫn còn Bích Ba\Ncó quan hệ huyết thống với cô ấy.
Dialogue: 0,0:41:52.52,0:41:54.00,Default,,0,0,0,,Ta sẽ đến núi Tử Nguyệt tìm hắn.
Dialogue: 0,0:41:54.64,0:41:55.56,Default,,0,0,0,,Ta nhất định
Dialogue: 0,0:41:56.44,0:41:57.72,Default,,0,0,0,,phải tìm bằng được cách.
Dialogue: 0,0:42:13.20,0:42:15.36,Default,,0,0,0,,PHÒNG CỦA BÍCH BA, NÚI TỬ NGUYỆT
Dialogue: 0,0:42:21.08,0:42:22.00,Default,,0,0,0,,Thế này là sao?
Dialogue: 0,0:42:25.24,0:42:26.52,Default,,0,0,0,,Giúp A Âm kéo dài tuổi thọ?
Dialogue: 0,0:42:26.60,0:42:27.68,Default,,0,0,0,,Không sai,
Dialogue: 0,0:42:28.16,0:42:29.80,Default,,0,0,0,,ngươi là thần thú Thủy Ngưng,
Dialogue: 0,0:42:29.88,0:42:30.96,Default,,0,0,0,,ngươi có cách gì không?
Dialogue: 0,0:42:32.08,0:42:33.88,Default,,0,0,0,,Làm vậy là đi ngược lẽ trời,
Dialogue: 0,0:42:34.68,0:42:35.88,Default,,0,0,0,,thực sự quá khó.
Dialogue: 0,0:42:37.24,0:42:39.52,Default,,0,0,0,,Nếu ngươi có cách thì hãy nói với ta.
Dialogue: 0,0:42:40.56,0:42:41.76,Default,,0,0,0,,Chuyện này…
Dialogue: 0,0:42:41.84,0:42:43.76,Default,,0,0,0,,Có cách thì nói đi, Bích Ba.
