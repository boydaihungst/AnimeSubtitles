Dialogue: 0,0:01:29.80,0:01:36.68,Default,,0,0,0,,CHUYỂN THỂ TỪ TIỂU THUYẾT CÙNG TÊN\NCỦA TINH LINH
Dialogue: 0,0:01:41.48,0:01:42.92,Default,,0,0,0,,A Âm, không sao chứ?
Dialogue: 0,0:01:43.76,0:01:44.80,Default,,0,0,0,,Ta không sao.
Dialogue: 0,0:01:45.28,0:01:46.92,Default,,0,0,0,,Khế ước chủ tớ của cô phát tác
Dialogue: 0,0:01:47.00,0:01:47.88,Default,,0,0,0,,nên mới ngất đi.
Dialogue: 0,0:01:48.84,0:01:49.92,Default,,0,0,0,,Khế ước chủ tớ phát tác
Dialogue: 0,0:01:50.00,0:01:52.20,Default,,0,0,0,,khi có suy nghĩ trái ngược\Nvới khế ước tiên.
Dialogue: 0,0:01:53.28,0:01:54.16,Default,,0,0,0,,A Âm,
Dialogue: 0,0:01:54.24,0:01:56.76,Default,,0,0,0,,ta hỏi cô, cô phải trả lời thành thật.
Dialogue: 0,0:01:57.32,0:01:58.68,Default,,0,0,0,,Cô muốn làm hại Cổ Tấn à?
Dialogue: 0,0:01:59.24,0:02:00.40,Default,,0,0,0,,Không có.
Dialogue: 0,0:02:00.48,0:02:01.80,Default,,0,0,0,,Sao ta lại hại huynh ấy chứ?
Dialogue: 0,0:02:01.88,0:02:02.88,Default,,0,0,0,,Vậy cô
Dialogue: 0,0:02:03.76,0:02:05.08,Default,,0,0,0,,đã động lòng với Cổ Tấn sao?
Dialogue: 0,0:02:10.44,0:02:11.48,Default,,0,0,0,,Sao có thể chứ?
Dialogue: 0,0:02:11.96,0:02:12.80,Default,,0,0,0,,Không thể nào.
Dialogue: 0,0:02:14.52,0:02:15.84,Default,,0,0,0,,Vậy cô hãy tĩnh dưỡng.
Dialogue: 0,0:02:16.56,0:02:19.60,Default,,0,0,0,,Thanh Y, A Cửu,\Nhai người chăm sóc A Âm thật tốt nhé.
Dialogue: 0,0:02:20.44,0:02:21.52,Default,,0,0,0,,Vâng.
Dialogue: 0,0:02:25.68,0:02:26.56,Default,,0,0,0,,Thanh Y,
Dialogue: 0,0:02:27.76,0:02:29.56,Default,,0,0,0,,nấu cho A Âm bát canh gà để bồi bổ đi.
Dialogue: 0,0:02:34.32,0:02:36.52,Default,,0,0,0,,Nhanh lên. Ta không sao, huynh mau về đi.
Dialogue: 0,0:02:36.60,0:02:37.64,Default,,0,0,0,,Ta muốn đi ngủ rồi.
Dialogue: 0,0:02:40.56,0:02:42.20,Default,,0,0,0,,Hôm nay là lễ Thất Tịch,
Dialogue: 0,0:02:42.28,0:02:45.48,Default,,0,0,0,,ta thấy khách khứa đến xem rèn luyện\Nđều ra Thiên Hà chơi rồi.
Dialogue: 0,0:02:46.04,0:02:49.60,Default,,0,0,0,,Hay là chúng ta cũng đến Thiên Hà\Nđi dạo và thư giãn xem sao?
Dialogue: 0,0:02:53.88,0:02:54.76,Default,,0,0,0,,Không đi thật à?
Dialogue: 0,0:03:01.56,0:03:02.40,Default,,0,0,0,,Được thôi.
Dialogue: 0,0:03:03.24,0:03:04.20,Default,,0,0,0,,Vậy cô ngủ đi.
Dialogue: 0,0:03:05.16,0:03:06.00,Default,,0,0,0,,Ta đi đây.
Dialogue: 0,0:03:11.48,0:03:12.32,Default,,0,0,0,,Không lẽ
Dialogue: 0,0:03:12.80,0:03:14.12,Default,,0,0,0,,A Âm thích Cổ Tấn thật sao?
Dialogue: 0,0:03:27.60,0:03:30.04,Default,,0,0,0,,Tại sao trong đầu ngươi\Nchỉ nghĩ về Cổ Tấn thôi vậy?
Dialogue: 0,0:03:30.12,0:03:31.52,Default,,0,0,0,,Nếu bị người khác phát hiện
Dialogue: 0,0:03:32.16,0:03:33.84,Default,,0,0,0,,thì xấu hổ chết mất.
Dialogue: 0,0:03:35.04,0:03:36.16,Default,,0,0,0,,Nghĩ kĩ lại đi,
Dialogue: 0,0:03:36.24,0:03:39.28,Default,,0,0,0,,Cổ Tấn là tên cậu ấm vô dụng,\Nchẳng làm được việc gì,
Dialogue: 0,0:03:39.36,0:03:40.80,Default,,0,0,0,,có gì tốt đâu chứ?
Dialogue: 0,0:03:41.28,0:03:43.08,Default,,0,0,0,,Cho dù huynh ấy có nghiêm túc…
Dialogue: 0,0:03:43.68,0:03:45.12,Default,,0,0,0,,nghiêm túc
Dialogue: 0,0:03:45.68,0:03:47.72,Default,,0,0,0,,thì hình như cũng hơi điển trai đấy.
Dialogue: 0,0:03:48.28,0:03:49.20,Default,,0,0,0,,Không đúng.
Dialogue: 0,0:03:50.08,0:03:52.68,Default,,0,0,0,,Huynh ấy bắt ngươi\Ngọi phải tới, đuổi phải đi,
Dialogue: 0,0:03:52.76,0:03:54.00,Default,,0,0,0,,còn chẳng nói lý lẽ nữa.
Dialogue: 0,0:03:55.00,0:03:58.12,Default,,0,0,0,,Nhưng mà, huynh ấy đã cố gắng\Nthắng đại hội rèn luyện
Dialogue: 0,0:03:58.68,0:04:00.16,Default,,0,0,0,,rồi lại cứu mạng ngươi mà.
Dialogue: 0,0:04:00.84,0:04:02.80,Default,,0,0,0,,Hình như cũng chưa ai\Ntốt với ngươi như vậy.
Dialogue: 0,0:04:05.08,0:04:06.32,Default,,0,0,0,,Không nghĩ nữa.
Dialogue: 0,0:04:06.80,0:04:08.36,Default,,0,0,0,,Không thể cứ nghĩ mãi được.
Dialogue: 0,0:04:08.92,0:04:10.88,Default,,0,0,0,,Ta phải nghĩ cách quên huynh ấy đi.
Dialogue: 0,0:04:11.44,0:04:12.48,Default,,0,0,0,,Ra ngoài đi dạo.
Dialogue: 0,0:04:14.92,0:04:16.72,Default,,0,0,0,,THIÊN HÀ, THIÊN CUNG
Dialogue: 0,0:04:18.60,0:04:19.64,Default,,0,0,0,,Đẹp quá.
Dialogue: 0,0:04:19.72,0:04:20.72,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:04:20.80,0:04:22.12,Default,,0,0,0,,Đẹp quá.
Dialogue: 0,0:04:23.80,0:04:25.04,Default,,0,0,0,,- Ước xong chưa?\N- Xong rồi.
Dialogue: 0,0:04:25.12,0:04:27.00,Default,,0,0,0,,- Muốn ước không?\N- Ngôi sao kia sáng quá.
Dialogue: 0,0:04:27.08,0:04:28.16,Default,,0,0,0,,Đúng vậy, nhìn xem.
Dialogue: 0,0:04:29.72,0:04:31.64,Default,,0,0,0,,Muội nhìn kìa, ngôi sao kia bay cao quá.
Dialogue: 0,0:04:31.72,0:04:32.64,Default,,0,0,0,,Cả đằng kia nữa.
Dialogue: 0,0:04:34.88,0:04:35.72,Default,,0,0,0,,Họ đều nói…
Dialogue: 0,0:04:35.80,0:04:37.24,Default,,0,0,0,,- Đợi ta với.\N- Của ta đẹp nhất.
Dialogue: 0,0:04:37.32,0:04:39.32,Default,,0,0,0,,- Ta cũng thấy vậy.\N- Đương nhiên rồi.
Dialogue: 0,0:04:39.40,0:04:40.64,Default,,0,0,0,,Nào, cẩn thận nhé.
Dialogue: 0,0:04:41.92,0:04:43.12,Default,,0,0,0,,Cám ơn.
Dialogue: 0,0:04:46.84,0:04:47.72,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:04:47.80,0:04:48.80,Default,,0,0,0,,Sao nào? Đẹp chứ?
Dialogue: 0,0:04:48.88,0:04:50.04,Default,,0,0,0,,Đẹp quá.
Dialogue: 0,0:04:52.16,0:04:55.08,Default,,0,0,0,,Ta vẫn nên đi tìm một nơi ít người thôi.
Dialogue: 0,0:05:08.68,0:05:10.28,Default,,0,0,0,,Nơi đây mặc dù hẻo lánh
Dialogue: 0,0:05:10.96,0:05:12.96,Default,,0,0,0,,nhưng phong cảnh lại vô cùng đẹp.
Dialogue: 0,0:05:13.68,0:05:14.72,Default,,0,0,0,,Ta thường nghĩ
Dialogue: 0,0:05:15.20,0:05:16.76,Default,,0,0,0,,nếu như đã phải lòng ai đó
Dialogue: 0,0:05:17.60,0:05:19.32,Default,,0,0,0,,nhất định phải đưa người đó đến đây.
Dialogue: 0,0:05:21.12,0:05:22.52,Default,,0,0,0,,Đế quân có lòng rồi.
Dialogue: 0,0:05:41.56,0:05:42.76,Default,,0,0,0,,Hoa Thù?
Dialogue: 0,0:05:42.84,0:05:44.36,Default,,0,0,0,,Lan Phong đế quân?
Dialogue: 0,0:05:45.08,0:05:46.36,Default,,0,0,0,,Vậy A Tấn…
Dialogue: 0,0:06:05.20,0:06:06.52,Default,,0,0,0,,Trân trọng người trước mắt.
Dialogue: 0,0:06:07.20,0:06:09.48,Default,,0,0,0,,Đây là minh chứng cho tấm lòng của ta.
Dialogue: 0,0:06:10.60,0:06:13.36,Default,,0,0,0,,Ta mong đó cũng là tâm tư của muội.
Dialogue: 0,0:06:22.64,0:06:23.52,Default,,0,0,0,,Hoa Thù,
Dialogue: 0,0:06:24.44,0:06:25.28,Default,,0,0,0,,muội yên tâm.
Dialogue: 0,0:06:25.36,0:06:27.80,Default,,0,0,0,,Trước khi muội\Nvẫn chưa rõ lòng mình thế nào,
Dialogue: 0,0:06:27.88,0:06:30.04,Default,,0,0,0,,ta sẽ không ép muội phải đáp lại ta.
Dialogue: 0,0:06:30.64,0:06:31.96,Default,,0,0,0,,Ta sẽ luôn chờ muội,
Dialogue: 0,0:06:32.04,0:06:34.56,Default,,0,0,0,,chờ đến khi\Nmuội có thể chính thức chấp nhận ta.
Dialogue: 0,0:06:45.16,0:06:46.28,Default,,0,0,0,,Tâm tư của ta
Dialogue: 0,0:06:46.36,0:06:47.92,Default,,0,0,0,,đế quân còn chưa rõ sao?
Dialogue: 0,0:06:48.00,0:06:49.48,Default,,0,0,0,,Trong 200 năm qua,
Dialogue: 0,0:06:49.56,0:06:51.32,Default,,0,0,0,,tinh huy này vẫn luôn cổ vũ ta
Dialogue: 0,0:06:51.40,0:06:54.68,Default,,0,0,0,,như lời thì thầm dịu dàng năm đó\Nđế quân đã nói trước mặt ta.
Dialogue: 0,0:06:55.24,0:06:56.24,Default,,0,0,0,,Mỗi khi nhớ lại,
Dialogue: 0,0:06:56.80,0:06:59.40,Default,,0,0,0,,ta đều thấy thật may mắn\Nkhi ấy có thể gặp được đế quân.
Dialogue: 0,0:07:00.12,0:07:01.20,Default,,0,0,0,,Chỉ là bây giờ
Dialogue: 0,0:07:02.16,0:07:04.72,Default,,0,0,0,,chỉ mong cuộc chiến giữa tộc Ưng\Nvà tộc ta mau kết thúc.
Dialogue: 0,0:07:04.80,0:07:08.40,Default,,0,0,0,,Đến lúc đó, ta mới có thể cùng ngài\Nnói về chuyện tương lai.
Dialogue: 0,0:07:13.32,0:07:14.16,Default,,0,0,0,,Hoa Thù,
Dialogue: 0,0:07:14.84,0:07:15.96,Default,,0,0,0,,ta nhất định sẽ thúc đẩy
Dialogue: 0,0:07:16.04,0:07:17.88,Default,,0,0,0,,hai tộc đình chiến và nghị hòa với nhau.
Dialogue: 0,0:07:21.04,0:07:21.88,Default,,0,0,0,,Đúng rồi.
Dialogue: 0,0:07:21.96,0:07:24.64,Default,,0,0,0,,Hôm nay, ta có chuẩn bị\Ncho muội một món quà.
Dialogue: 0,0:07:24.72,0:07:26.48,Default,,0,0,0,,Muội ở đây đợi ta một lát.
Dialogue: 0,0:07:48.88,0:07:49.76,Default,,0,0,0,,Sao cô lại ở đây?
Dialogue: 0,0:07:50.36,0:07:52.16,Default,,0,0,0,,Câu này phải là ta hỏi cô mới đúng.
Dialogue: 0,0:07:52.24,0:07:53.20,Default,,0,0,0,,Sao cô lại ở đây?
Dialogue: 0,0:07:53.80,0:07:55.24,Default,,0,0,0,,Cô vứt A Tấn sang một bên,
Dialogue: 0,0:07:55.32,0:07:57.32,Default,,0,0,0,,hôm nay lại hẹn hò với Lan Phong đế quân.
Dialogue: 0,0:07:57.40,0:07:58.24,Default,,0,0,0,,Ý cô là sao?
Dialogue: 0,0:07:58.32,0:08:01.36,Default,,0,0,0,,Một tiên bộc hạ cấp thôi\Ncũng xứng hỏi chuyện của bổn điện sao?
Dialogue: 0,0:08:05.24,0:08:06.80,Default,,0,0,0,,Nếu cô không có ý gì với huynh ấy
Dialogue: 0,0:08:06.88,0:08:10.12,Default,,0,0,0,,thì nên nói rõ với huynh ấy,\Nkhông nên qua loa với huynh ấy như vậy.
Dialogue: 0,0:08:10.68,0:08:12.40,Default,,0,0,0,,Cô làm những việc nay này mai khác,
Dialogue: 0,0:08:12.48,0:08:14.88,Default,,0,0,0,,lăng nhăng thế này là có ý gì hả?
Dialogue: 0,0:08:15.52,0:08:16.48,Default,,0,0,0,,Vậy sao?
Dialogue: 0,0:08:17.32,0:08:20.20,Default,,0,0,0,,Vậy thì cô có cơ hội\Nchạm tới trái tim chủ nhân của cô rồi.
Dialogue: 0,0:08:20.76,0:08:24.08,Default,,0,0,0,,Cổ Tấn có biết tiên bộc thấp hèn như cô\Nmơ tưởng tới ngài ấy không?
Dialogue: 0,0:08:24.16,0:08:25.60,Default,,0,0,0,,Nhìn cô mơ mộng hão huyền kìa,
Dialogue: 0,0:08:25.68,0:08:26.84,Default,,0,0,0,,thật nực cười.
Dialogue: 0,0:08:30.52,0:08:31.52,Default,,0,0,0,,Ta biết rồi.
Dialogue: 0,0:08:32.76,0:08:35.84,Default,,0,0,0,,Là vì cô sợ A Tấn đòi lại ô Già Thiên\Nmà huynh ấy cho cô mượn
Dialogue: 0,0:08:35.92,0:08:38.00,Default,,0,0,0,,nên cô mới qua loa, mập mờ với huynh ấy.
Dialogue: 0,0:08:38.68,0:08:42.00,Default,,0,0,0,,Cô quả nhiên là hạng lòng dạ tiểu nhân.\NGiờ ta sẽ đi nói với huynh ấy.
Dialogue: 0,0:08:54.72,0:08:57.24,Default,,0,0,0,,Miệng mật lòng gươm, khua môi múa mép
Dialogue: 0,0:08:57.32,0:08:58.76,Default,,0,0,0,,không phải thói quen tốt đâu.
Dialogue: 0,0:09:10.64,0:09:12.60,Default,,0,0,0,,Cô đến đây ngắm đèn dạo chơi,
Dialogue: 0,0:09:12.68,0:09:15.16,Default,,0,0,0,,chỉ nhìn thấy cảnh đẹp Thiên Hà,
Dialogue: 0,0:09:15.24,0:09:17.80,Default,,0,0,0,,ngoài ra cô không thấy gì hết.
Dialogue: 0,0:09:19.00,0:09:21.24,Default,,0,0,0,,Khi cô về đến đường tiên Thước Vũ,
Dialogue: 0,0:09:21.32,0:09:24.44,Default,,0,0,0,,cô sẽ quên hết việc đã gặp ta.
Dialogue: 0,0:09:25.00,0:09:25.88,Default,,0,0,0,,Hoa Thù.
Dialogue: 0,0:09:27.68,0:09:28.64,Default,,0,0,0,,Đi đi.
Dialogue: 0,0:09:43.44,0:09:44.96,Default,,0,0,0,,Nữ quân lúc nãy là?
Dialogue: 0,0:09:45.52,0:09:46.64,Default,,0,0,0,,Chỉ hỏi đường thôi.
Dialogue: 0,0:09:49.40,0:09:50.56,Default,,0,0,0,,Tặng muội.
Dialogue: 0,0:10:11.76,0:10:12.64,Default,,0,0,0,,Đẹp không?
Dialogue: 0,0:10:13.68,0:10:14.52,Default,,0,0,0,,Đẹp lắm.
Dialogue: 0,0:10:31.16,0:10:33.36,Default,,0,0,0,,Nghe nói viết điều ước lên đèn
Dialogue: 0,0:10:33.44,0:10:35.04,Default,,0,0,0,,sẽ thành hiện thực đấy.
Dialogue: 0,0:10:35.12,0:10:36.16,Default,,0,0,0,,Thật sao?
Dialogue: 0,0:10:36.24,0:10:37.20,Default,,0,0,0,,Cô không sao chứ?
Dialogue: 0,0:10:47.08,0:10:48.04,Default,,0,0,0,,Không đúng.
Dialogue: 0,0:10:48.12,0:10:49.92,Default,,0,0,0,,Có một chuyện rất quan trọng.
Dialogue: 0,0:10:50.00,0:10:50.84,Default,,0,0,0,,Là…
Dialogue: 0,0:12:30.00,0:12:31.80,Default,,0,0,0,,Điện hạ, cẩn thận.
Dialogue: 0,0:12:31.88,0:12:32.80,Default,,0,0,0,,A Tấn.
Dialogue: 0,0:12:35.36,0:12:36.40,Default,,0,0,0,,Hoa Thù điện hạ,
Dialogue: 0,0:12:37.44,0:12:38.28,Default,,0,0,0,,cô đến rồi à?
Dialogue: 0,0:12:38.36,0:12:39.44,Default,,0,0,0,,A Tấn,
Dialogue: 0,0:12:39.52,0:12:41.84,Default,,0,0,0,,đêm qua vết thương của ta\Nđột nhiên phát tác.
Dialogue: 0,0:12:41.92,0:12:43.44,Default,,0,0,0,,Xin lỗi vì để ngài đợi.
Dialogue: 0,0:12:44.00,0:12:45.40,Default,,0,0,0,,Vậy bây giờ đỡ hơn chưa?
Dialogue: 0,0:12:45.48,0:12:48.16,Default,,0,0,0,,Uống thuốc nên không sao rồi.\NTa đến là để chuộc tội.
Dialogue: 0,0:12:48.24,0:12:50.24,Default,,0,0,0,,Hôm nay nguyện uống cùng ngài.
Dialogue: 0,0:12:51.40,0:12:52.36,Default,,0,0,0,,Không sao đâu.
Dialogue: 0,0:12:53.16,0:12:55.48,Default,,0,0,0,,Đợi khi nào\Nđiện hạ khỏe lại cũng không muộn.
Dialogue: 0,0:12:57.60,0:12:58.64,Default,,0,0,0,,Chỉ là
Dialogue: 0,0:12:58.72,0:12:59.92,Default,,0,0,0,,ta muốn biết…
Dialogue: 0,0:13:00.80,0:13:02.28,Default,,0,0,0,,Rốt cuộc trong lòng điện hạ, ta…
Dialogue: 0,0:13:02.36,0:13:03.96,Default,,0,0,0,,Là một tên đại ngốc.
Dialogue: 0,0:13:06.04,0:13:06.96,Default,,0,0,0,,A Âm?
Dialogue: 0,0:13:07.56,0:13:09.04,Default,,0,0,0,,Huynh đừng nói gì hết.
Dialogue: 0,0:13:10.16,0:13:12.00,Default,,0,0,0,,Tối qua, cô ta không đến gặp huynh
Dialogue: 0,0:13:12.08,0:13:13.88,Default,,0,0,0,,không phải vì bị đau đớn gì hết
Dialogue: 0,0:13:13.96,0:13:15.16,Default,,0,0,0,,mà là cô ta hẹn…
Dialogue: 0,0:13:20.52,0:13:21.88,Default,,0,0,0,,Hẹn với người khác.
Dialogue: 0,0:13:22.72,0:13:24.16,Default,,0,0,0,,Cái gì mà hẹn với người khác?
Dialogue: 0,0:13:24.24,0:13:25.28,Default,,0,0,0,,A Âm nữ quân,
Dialogue: 0,0:13:25.36,0:13:27.12,Default,,0,0,0,,ta không biết cô nghe ai nói như vậy?
Dialogue: 0,0:13:27.20,0:13:28.40,Default,,0,0,0,,Tạ hẹn với ai khác?
Dialogue: 0,0:13:28.48,0:13:29.48,Default,,0,0,0,,Mong cô nói rõ.
Dialogue: 0,0:13:29.56,0:13:31.20,Default,,0,0,0,,Cô muốn ta nói ra thật sao?
Dialogue: 0,0:13:31.76,0:13:33.68,Default,,0,0,0,,Nói ra để mọi người đều khó xử sao?
Dialogue: 0,0:13:34.20,0:13:36.08,Default,,0,0,0,,Vậy ý cô là cô không nói ra được rồi?
Dialogue: 0,0:13:36.16,0:13:38.16,Default,,0,0,0,,Lẽ nào tối qua uống rượu nhiều quá?
Dialogue: 0,0:13:38.72,0:13:41.28,Default,,0,0,0,,Tại sao lại chỉ còn\Nnhững mảnh kí ức mơ hồ vậy?
Dialogue: 0,0:13:42.16,0:13:44.20,Default,,0,0,0,,Rốt cuộc cô ta ở cùng với ai chứ?
Dialogue: 0,0:13:44.28,0:13:45.28,Default,,0,0,0,,A Âm.
Dialogue: 0,0:13:45.36,0:13:46.40,Default,,0,0,0,,A Âm cô nương,
Dialogue: 0,0:13:46.48,0:13:49.48,Default,,0,0,0,,tối qua vết thương của điện hạ\Nđau mãi không dứt, trằn trọc cả đêm.
Dialogue: 0,0:13:49.56,0:13:52.24,Default,,0,0,0,,Không thể để cô nói năng bừa bãi\Nhủy hoại thanh danh đâu.
Dialogue: 0,0:13:52.32,0:13:53.92,Default,,0,0,0,,Nếu cô không nói được là ai
Dialogue: 0,0:13:54.00,0:13:56.20,Default,,0,0,0,,thì hãy lập tức\Nxin lỗi điện hạ của ta ngay.
Dialogue: 0,0:13:56.76,0:13:58.28,Default,,0,0,0,,Ta thật sự nhìn thấy mà.
Dialogue: 0,0:13:59.64,0:14:00.64,Default,,0,0,0,,Chỉ là…
Dialogue: 0,0:14:01.64,0:14:04.24,Default,,0,0,0,,Ta không biết ta đắc tội gì\NA Âm nữ quân đây.
Dialogue: 0,0:14:04.32,0:14:05.32,Default,,0,0,0,,Không có bằng chứng
Dialogue: 0,0:14:05.40,0:14:07.32,Default,,0,0,0,,lại dám nói chắc nịch,\Nbám riết không thôi.
Dialogue: 0,0:14:07.40,0:14:09.48,Default,,0,0,0,,Nhưng ta cũng không thể\Nchịu nỗi oan này được.
Dialogue: 0,0:14:10.00,0:14:12.28,Default,,0,0,0,,A Âm nữ quân,\Ncô dám lập lời thề Giám Tâm không?
Dialogue: 0,0:14:14.96,0:14:17.60,Default,,0,0,0,,Đặt tay lên đây,\Nlời thề này sẽ soi vào trái tim,
Dialogue: 0,0:14:17.68,0:14:20.32,Default,,0,0,0,,cô chỉ cần nói ra cô gặp ta\Ntrong tình cảnh thế nào thôi.
Dialogue: 0,0:14:20.40,0:14:22.32,Default,,0,0,0,,Nếu có một câu bịa đặt
Dialogue: 0,0:14:22.40,0:14:24.84,Default,,0,0,0,,thì cô sẽ phải chịu\Nnỗi đau thiêu đốt tâm can.
Dialogue: 0,0:14:26.12,0:14:27.20,Default,,0,0,0,,A Âm.
Dialogue: 0,0:14:27.88,0:14:28.76,Default,,0,0,0,,Hoa Thù điện hạ,
Dialogue: 0,0:14:28.84,0:14:31.20,Default,,0,0,0,,chú Giám Tâm này là thứ\Ncó thể dùng bừa sao?
Dialogue: 0,0:14:32.12,0:14:33.40,Default,,0,0,0,,Cô đừng làm càn nữa, A Âm.
Dialogue: 0,0:14:33.48,0:14:34.96,Default,,0,0,0,,Sao lại bảo ta làm càn?
Dialogue: 0,0:14:35.04,0:14:36.60,Default,,0,0,0,,Ta đã nhìn thấy thật mà.
Dialogue: 0,0:14:38.68,0:14:39.72,Default,,0,0,0,,Huynh không tin ta ư?
Dialogue: 0,0:14:41.60,0:14:43.04,Default,,0,0,0,,- Được, nếu như không tin…\N- Ta…
Dialogue: 0,0:14:45.96,0:14:47.00,Default,,0,0,0,,Là do ta nhiều chuyện.
Dialogue: 0,0:14:47.60,0:14:48.88,Default,,0,0,0,,Là do ta nhiều chuyện.
Dialogue: 0,0:14:49.60,0:14:50.64,Default,,0,0,0,,A Âm.
Dialogue: 0,0:14:52.12,0:14:53.00,Default,,0,0,0,,A Âm.
Dialogue: 0,0:14:53.76,0:14:54.68,Default,,0,0,0,,A Âm.
Dialogue: 0,0:14:57.64,0:14:58.76,Default,,0,0,0,,Hoa Thù điện hạ,
Dialogue: 0,0:14:58.84,0:15:00.48,Default,,0,0,0,,có thể A Âm đã nhìn nhầm,
Dialogue: 0,0:15:01.04,0:15:03.92,Default,,0,0,0,,nhưng những chuyện như này,\Ncô ấy chưa bao giờ nói dối.
Dialogue: 0,0:15:09.48,0:15:10.72,Default,,0,0,0,,Điện hạ đã dùng Vân Yên
Dialogue: 0,0:15:10.80,0:15:13.04,Default,,0,0,0,,xóa đi ký ức A Âm gặp người vào tối qua.
Dialogue: 0,0:15:14.36,0:15:15.52,Default,,0,0,0,,Linh lực cô ta yếu kém
Dialogue: 0,0:15:15.60,0:15:17.28,Default,,0,0,0,,sẽ không thể nhớ lại được đâu.
Dialogue: 0,0:15:17.36,0:15:18.76,Default,,0,0,0,,Điện hạ cần gì phải lo lắng.
Dialogue: 0,0:15:19.52,0:15:21.04,Default,,0,0,0,,Chỉ là một tiên thú thôi
Dialogue: 0,0:15:21.76,0:15:23.32,Default,,0,0,0,,mà Cổ Tấn lại bảo vệ đến vậy.
Dialogue: 0,0:15:25.20,0:15:26.40,Default,,0,0,0,,Ta cứ thấy
Dialogue: 0,0:15:27.08,0:15:28.92,Default,,0,0,0,,A Âm sẽ là một kẻ rắc rối.
Dialogue: 0,0:15:29.68,0:15:31.16,Default,,0,0,0,,Không phải điện hạ nói
Dialogue: 0,0:15:31.24,0:15:32.68,Default,,0,0,0,,nếu không phải vì ô Già Thiên
Dialogue: 0,0:15:32.76,0:15:34.80,Default,,0,0,0,,thì tên Cổ Tấn\Ncũng không đáng để ngó đến mà?
Dialogue: 0,0:15:35.36,0:15:38.88,Default,,0,0,0,,Huống hồ, người đã có được trái tim\Ncủa Lan Phong đế quân như mong muốn.
Dialogue: 0,0:15:39.44,0:15:41.28,Default,,0,0,0,,Ngài còn bảo tiên bà khéo tay ở Thiên Hà
Dialogue: 0,0:15:41.36,0:15:43.32,Default,,0,0,0,,làm vòng cổ Khổng Tước cho người.
Dialogue: 0,0:15:44.16,0:15:46.84,Default,,0,0,0,,Đế quân quả thật đã\Ndành nhiều tâm tư cho điện hạ.
Dialogue: 0,0:15:47.96,0:15:49.04,Default,,0,0,0,,Tiếc là
Dialogue: 0,0:15:49.80,0:15:52.60,Default,,0,0,0,,hắn ta không chịu thiên vị\Ncho tộc Khổng Tước ta chút nào.
Dialogue: 0,0:15:54.12,0:15:57.88,Default,,0,0,0,,Đúng là người thừa kế thiên đế\Nchính trực, công tư phân minh.
Dialogue: 0,0:16:03.32,0:16:05.28,Default,,0,0,0,,Chúng ta và tộc Ưng\Nđã giằng co quá lâu rồi.
Dialogue: 0,0:16:06.04,0:16:08.24,Default,,0,0,0,,Nếu không thể\Nnhanh chóng kết thúc cuộc chiến này
Dialogue: 0,0:16:08.76,0:16:10.12,Default,,0,0,0,,thì e hậu hoạn khôn lường.
Dialogue: 0,0:16:25.64,0:16:28.04,Default,,0,0,0,,Điện hạ, là tin chiến sự từ đảo Bách Điểu.
Dialogue: 0,0:16:31.96,0:16:33.48,Default,,0,0,0,,ĐẠI ĐIỆN HẠ HOA DIÊN BỊ BẮT
Dialogue: 0,0:16:33.56,0:16:35.24,Default,,0,0,0,,TÌNH HÌNH NGUY CẤP, MAU NGHĨ CÁCH CỨU
Dialogue: 0,0:16:39.08,0:16:40.36,Default,,0,0,0,,Tên Hoa Diên ngu ngốc này.
Dialogue: 0,0:16:40.92,0:16:41.80,Default,,0,0,0,,Đại điện hạ ạ?
Dialogue: 0,0:16:41.88,0:16:43.32,Default,,0,0,0,,Ta đã nói rõ từ trước rồi,
Dialogue: 0,0:16:43.40,0:16:45.92,Default,,0,0,0,,trước khi ta tìm được\Nhậu thuẫn đủ lớn mạnh
Dialogue: 0,0:16:46.00,0:16:48.20,Default,,0,0,0,,thì cứ tiếp tục giằng co với tộc Ưng\Nlà tốt nhất.
Dialogue: 0,0:16:48.88,0:16:51.36,Default,,0,0,0,,Hắn thì giỏi rồi,\Ntự ý đánh lén doanh trại tộc Ưng,
Dialogue: 0,0:16:51.44,0:16:52.96,Default,,0,0,0,,kết quả lại bị Ưng vương bắt giữ.
Dialogue: 0,0:16:53.04,0:16:54.08,Default,,0,0,0,,Bây giờ cả Bắc Hải này
Dialogue: 0,0:16:54.16,0:16:56.08,Default,,0,0,0,,đang cười nhạo\Ntộc Khổng Tước chúng ta đấy.
Dialogue: 0,0:16:56.84,0:17:00.20,Default,,0,0,0,,Vậy chúng ta chẳng phải đành để tộc Ưng\Nđưa ra điều kiện sao?
Dialogue: 0,0:17:07.56,0:17:09.36,Default,,0,0,0,,Tộc Ưng khiêu chiến trước,
Dialogue: 0,0:17:10.44,0:17:12.56,Default,,0,0,0,,đảo Bách Điểu ta\Nsao có thể nhượng bộ được?
Dialogue: 0,0:17:13.52,0:17:15.68,Default,,0,0,0,,Nhưng rõ ràng người có thần binh\Nmà Cổ Tấn tặng.
Dialogue: 0,0:17:16.24,0:17:17.84,Default,,0,0,0,,Nó có thể dọn sạch mọi chướng ngại,
Dialogue: 0,0:17:17.92,0:17:20.60,Default,,0,0,0,,khiến tộc Ưng sợ hãi rút lui\Nkhông dám đến xâm phạm nữa mà?
Dialogue: 0,0:17:23.48,0:17:26.12,Default,,0,0,0,,Nhưng đây là bán thần khí,\Nvới đạo hạnh của ta
Dialogue: 0,0:17:26.68,0:17:28.72,Default,,0,0,0,,không thể khiến nó\Nphát huy được hết năng lực.
Dialogue: 0,0:17:30.24,0:17:31.28,Default,,0,0,0,,Trừ phi…
Dialogue: 0,0:17:42.64,0:17:45.00,Default,,0,0,0,,Chờ ta tìm được núi Ngưng Vân,
Dialogue: 0,0:17:45.56,0:17:49.96,Default,,0,0,0,,ta sẽ lập tức rời xa\Ntên Cổ Tấn ngu đần này.
Dialogue: 0,0:17:50.52,0:17:53.00,Default,,0,0,0,,Núi Ngưng Vân khó tìm vậy sao?
Dialogue: 0,0:17:53.08,0:17:54.44,Default,,0,0,0,,Vẫn chưa có tin tức gì à?
Dialogue: 0,0:17:55.00,0:17:56.36,Default,,0,0,0,,Núi Ngưng Vân
Dialogue: 0,0:17:56.44,0:17:59.08,Default,,0,0,0,,có kết giới ẩn giấu của nó.
Dialogue: 0,0:17:59.64,0:18:00.96,Default,,0,0,0,,Nó có thể trốn trong
Dialogue: 0,0:18:01.04,0:18:04.28,Default,,0,0,0,,bất cứ ngọn núi, con sông, cánh rừng nào.
Dialogue: 0,0:18:06.12,0:18:09.04,Default,,0,0,0,,Mỗi ngày ta đều truyền\Nlinh lực cho muội muội,
Dialogue: 0,0:18:10.00,0:18:12.32,Default,,0,0,0,,nhưng muội ấy chẳng có chút phản ứng nào.
Dialogue: 0,0:18:12.40,0:18:14.20,Default,,0,0,0,,Vậy nên ta đang nghĩ,
Dialogue: 0,0:18:15.40,0:18:16.84,Default,,0,0,0,,chắc là
Dialogue: 0,0:18:17.84,0:18:20.60,Default,,0,0,0,,muốn muội muội biến hình
Dialogue: 0,0:18:20.68,0:18:23.80,Default,,0,0,0,,thì cần phải tìm được\Nhồ Huyền của núi Ngưng Vân mới được.
Dialogue: 0,0:18:24.44,0:18:25.92,Default,,0,0,0,,Lần sau ta đi tìm cùng cô.
Dialogue: 0,0:18:26.52,0:18:29.24,Default,,0,0,0,,Tộc Hồ Ly bọn ta\Ngiỏi nhất là tìm bảo vật đấy.
Dialogue: 0,0:18:34.12,0:18:36.36,Default,,0,0,0,,Hôm nay không uống nữa,\Nvề phòng nghỉ ngơi đi.
Dialogue: 0,0:18:36.44,0:18:37.48,Default,,0,0,0,,Không được,
Dialogue: 0,0:18:37.56,0:18:39.64,Default,,0,0,0,,đã nói là không say không về rồi.
Dialogue: 0,0:18:41.20,0:18:42.20,Default,,0,0,0,,Ly rượu đâu?
Dialogue: 0,0:18:46.52,0:18:50.12,Default,,0,0,0,,Huynh không thấy\Nrượu hôm nay rất đặc biệt sao?
Dialogue: 0,0:18:50.76,0:18:52.60,Default,,0,0,0,,Đây là rượu hoa lê
Dialogue: 0,0:18:52.68,0:18:54.60,Default,,0,0,0,,mà A Âm ta ủ đấy.
Dialogue: 0,0:18:56.68,0:18:58.96,Default,,0,0,0,,Mười năm trước, ta gặp cô lần đầu.
Dialogue: 0,0:18:59.44,0:19:01.92,Default,,0,0,0,,Kể từ đó, thật ra lòng ta luôn nhớ đến cô.
Dialogue: 0,0:19:02.40,0:19:05.48,Default,,0,0,0,,Ta muốn nói với cô\Nlời ta đã giấu trong lòng mười năm.
Dialogue: 0,0:19:08.32,0:19:09.40,Default,,0,0,0,,Ta thích cô.
Dialogue: 0,0:19:12.92,0:19:14.04,Default,,0,0,0,,A Âm?
Dialogue: 0,0:19:25.32,0:19:27.12,Default,,0,0,0,,Vốn định giúp huynh ấy
Dialogue: 0,0:19:28.32,0:19:29.32,Default,,0,0,0,,nhưng bây giờ…
Dialogue: 0,0:19:33.52,0:19:35.08,Default,,0,0,0,,Không phải đã nói
Dialogue: 0,0:19:35.16,0:19:37.88,Default,,0,0,0,,hôm nay chỉ vui vẻ uống rượu,\Nkhông nghĩ đến chuyện khác sao?
Dialogue: 0,0:19:38.36,0:19:39.20,Default,,0,0,0,,Nào.
Dialogue: 0,0:19:39.68,0:19:40.56,Default,,0,0,0,,Không say không về.
Dialogue: 0,0:19:41.12,0:19:41.96,Default,,0,0,0,,Uống rượu.
Dialogue: 0,0:19:54.88,0:19:55.72,Default,,0,0,0,,Đúng rồi, A Cửu.
Dialogue: 0,0:19:56.28,0:19:59.96,Default,,0,0,0,,Vết thương của huynh đã lành rồi\Nmà vẫn không muốn quay về tộc Hồ Ly à?
Dialogue: 0,0:20:08.20,0:20:09.72,Default,,0,0,0,,Tộc Hồ Ly là nhà của ta
Dialogue: 0,0:20:09.80,0:20:11.32,Default,,0,0,0,,nhưng lại không giống nhà của ta.
Dialogue: 0,0:20:11.96,0:20:13.60,Default,,0,0,0,,Phụ hoàng, mẫu hậu ta đều không còn,
Dialogue: 0,0:20:14.16,0:20:15.44,Default,,0,0,0,,chỉ còn một người
Dialogue: 0,0:20:15.52,0:20:16.68,Default,,0,0,0,,mà ta không thích ở đó.
Dialogue: 0,0:20:17.24,0:20:19.04,Default,,0,0,0,,Huynh ghét cô cô của huynh vậy à?
Dialogue: 0,0:20:23.04,0:20:24.12,Default,,0,0,0,,Ta cũng không biết nữa.
Dialogue: 0,0:20:25.28,0:20:26.32,Default,,0,0,0,,Có lẽ là vì
Dialogue: 0,0:20:26.84,0:20:29.40,Default,,0,0,0,,nhìn thấy bà ấy là sẽ nhớ đến\Ncảnh tượng hỗn loạn
Dialogue: 0,0:20:30.08,0:20:31.28,Default,,0,0,0,,ở núi Tĩnh U năm xưa.
Dialogue: 0,0:20:32.44,0:20:33.56,Default,,0,0,0,,Bà ấy càng muốn bù đắp,
Dialogue: 0,0:20:34.88,0:20:36.16,Default,,0,0,0,,ta càng muốn bỏ chạy.
Dialogue: 0,0:20:40.28,0:20:41.36,Default,,0,0,0,,Nhưng không sao cả.
Dialogue: 0,0:20:41.92,0:20:43.56,Default,,0,0,0,,Chờ ta tìm được núi Ngưng Vân
Dialogue: 0,0:20:43.64,0:20:45.52,Default,,0,0,0,,sẽ cắt một miếng đất thật lớn cho huynh,
Dialogue: 0,0:20:45.60,0:20:47.68,Default,,0,0,0,,huynh muốn ở đâu cũng được.
Dialogue: 0,0:20:47.76,0:20:49.64,Default,,0,0,0,,Huynh không muốn về cũng được luôn.
Dialogue: 0,0:20:49.72,0:20:51.92,Default,,0,0,0,,Dù sao thì huynh làm gì cũng được hết.
Dialogue: 0,0:21:00.80,0:21:01.68,Default,,0,0,0,,A Âm.
Dialogue: 0,0:21:02.92,0:21:04.56,Default,,0,0,0,,Trước đây ta từng nói
Dialogue: 0,0:21:04.64,0:21:06.84,Default,,0,0,0,,muốn cô luyện thuật song tu\Ncủa tộc Hồ Ly với ta.
Dialogue: 0,0:21:07.72,0:21:09.00,Default,,0,0,0,,Giờ ta không nghĩ vậy nữa.
Dialogue: 0,0:21:12.20,0:21:14.76,Default,,0,0,0,,Bây giờ ta muốn\Nlà người mà cô giấu trong lòng.
Dialogue: 0,0:21:16.96,0:21:17.88,Default,,0,0,0,,Làm…
Dialogue: 0,0:21:20.68,0:21:21.80,Default,,0,0,0,,A Âm.
Dialogue: 0,0:21:24.48,0:21:25.80,Default,,0,0,0,,Lại là khế ước chủ tớ.
Dialogue: 0,0:21:29.36,0:21:31.12,Default,,0,0,0,,A Cửu, huynh nói gì cơ?
Dialogue: 0,0:21:38.92,0:21:41.24,Default,,0,0,0,,Sao huynh lại biến thành\Ndáng vẻ của A Tấn?
Dialogue: 0,0:21:41.92,0:21:45.00,Default,,0,0,0,,Huynh mau biến lại đi,\Ngiờ ta chẳng muốn thấy huynh ấy đâu.
Dialogue: 0,0:21:45.56,0:21:46.72,Default,,0,0,0,,A Cửu đã nói gì với cô?
Dialogue: 0,0:21:54.20,0:21:57.72,Default,,0,0,0,,Không phải hôm nay ta không tin cô.\NTính cách cô thế nào, ta biết rõ nhất.
Dialogue: 0,0:21:59.08,0:22:01.64,Default,,0,0,0,,Nhưng vẫn khiến cô chịu ấm ức rồi,\Nta nhận lỗi với cô.
Dialogue: 0,0:22:03.84,0:22:05.88,Default,,0,0,0,,Ai cần tên chủ nhân ngốc nghếch như huynh.
Dialogue: 0,0:22:07.00,0:22:08.16,Default,,0,0,0,,Đần độn.
Dialogue: 0,0:22:08.24,0:22:09.24,Default,,0,0,0,,Ta cứ uống rượu đấy.
Dialogue: 0,0:22:10.24,0:22:11.20,Default,,0,0,0,,A Âm.
Dialogue: 0,0:22:25.08,0:22:27.48,Default,,0,0,0,,Cô xem cô kia, hiện nguyên hình luôn rồi.
Dialogue: 0,0:22:32.80,0:22:37.04,Default,,0,0,0,,Cô còn chưa nói A Cửu bảo gì cô.\NCô đừng nghe hắn nói lung tung, rõ chưa?
Dialogue: 0,0:22:39.04,0:22:40.00,Default,,0,0,0,,A Tấn.
Dialogue: 0,0:22:42.72,0:22:44.32,Default,,0,0,0,,- Hoa Thù?\N- Hoa Thù?
Dialogue: 0,0:22:45.92,0:22:47.28,Default,,0,0,0,,Đèn Thước Vũ.
Dialogue: 0,0:22:48.36,0:22:50.24,Default,,0,0,0,,Người đó tặng cô ta đèn Thước Vũ.
Dialogue: 0,0:22:50.32,0:22:52.96,Default,,0,0,0,,- Ta sẽ chất vấn cô ta.\N- Như vậy không thể bị nhìn thấy.
Dialogue: 0,0:22:54.60,0:22:55.84,Default,,0,0,0,,- Giấu đi rồi tính.\N- Ta…
Dialogue: 0,0:22:55.92,0:22:58.12,Default,,0,0,0,,QUAN NHÀN TỰ TẠI
Dialogue: 0,0:22:58.20,0:23:00.04,Default,,0,0,0,,A Tấn, ngài có đó không?
Dialogue: 0,0:23:03.48,0:23:04.64,Default,,0,0,0,,Cô nấp ở đây nhé.
Dialogue: 0,0:23:04.72,0:23:06.52,Default,,0,0,0,,- Đừng phát ra tiếng.\N- Không đấy.
Dialogue: 0,0:23:07.68,0:23:09.56,Default,,0,0,0,,Huynh gọi cô ta vào đây,
Dialogue: 0,0:23:09.64,0:23:10.84,Default,,0,0,0,,ta đối chất với cô ta.
Dialogue: 0,0:23:19.88,0:23:20.76,Default,,0,0,0,,A Tấn.
Dialogue: 0,0:23:20.84,0:23:21.92,Default,,0,0,0,,Hoa Thù điện hạ,
Dialogue: 0,0:23:22.00,0:23:23.72,Default,,0,0,0,,muộn vậy rồi, có chuyện gì à?
Dialogue: 0,0:23:24.28,0:23:27.40,Default,,0,0,0,,Trong tộc có chuyện gấp,\Nsáng sớm mai ta phải về
Dialogue: 0,0:23:27.48,0:23:28.68,Default,,0,0,0,,nên tới đây tạm biệt ngài.
Dialogue: 0,0:23:31.04,0:23:33.16,Default,,0,0,0,,- Còn vài chuyện, ta muốn…\N- Ta muốn ra ngoài!
Dialogue: 0,0:23:40.64,0:23:42.12,Default,,0,0,0,,Hoa Thù điện hạ, ngày mai gì cơ?
Dialogue: 0,0:23:42.92,0:23:44.52,Default,,0,0,0,,Sáng sớm mai ta phải về rồi.
Dialogue: 0,0:23:45.08,0:23:45.96,Default,,0,0,0,,Gấp vậy sao?
Dialogue: 0,0:23:46.96,0:23:49.36,Default,,0,0,0,,Vết thương của Hoa Thù điện hạ đã đỡ chưa?
Dialogue: 0,0:23:49.44,0:23:50.84,Default,,0,0,0,,Không còn gì đáng ngại nữa.
Dialogue: 0,0:23:52.64,0:23:53.60,Default,,0,0,0,,Hoa Thù!
Dialogue: 0,0:23:54.44,0:23:55.84,Default,,0,0,0,,Đèn Thước Vũ.
Dialogue: 0,0:23:55.92,0:23:57.36,Default,,0,0,0,,Ngài có khách khác à?
Dialogue: 0,0:23:57.44,0:23:59.28,Default,,0,0,0,,Khách thì không,
Dialogue: 0,0:23:59.36,0:24:02.12,Default,,0,0,0,,chỉ là tự dưng\Ncó con mèo say xỉn xông vào phòng,
Dialogue: 0,0:24:02.68,0:24:05.16,Default,,0,0,0,,nhảy lên nhảy xuống,\Nlàm lộn xộn lung tung hết cả,
Dialogue: 0,0:24:05.24,0:24:07.52,Default,,0,0,0,,nên hôm nay ta không mời cô vào ngồi nữa.
Dialogue: 0,0:24:09.12,0:24:10.32,Default,,0,0,0,,Ta nhớ ra rồi.
Dialogue: 0,0:24:10.92,0:24:12.20,Default,,0,0,0,,Ta nhớ ra rồi.
Dialogue: 0,0:24:12.72,0:24:14.32,Default,,0,0,0,,Đèn Thước Vũ!
Dialogue: 0,0:24:16.36,0:24:19.60,Default,,0,0,0,,Hoa Thù điện hạ, ta phải về chăm sóc\Ncon mèo say xỉn của ta đây.
Dialogue: 0,0:24:19.68,0:24:20.92,Default,,0,0,0,,Cô nghỉ ngơi sớm đi nhé.
Dialogue: 0,0:24:27.64,0:24:28.48,Default,,0,0,0,,A Âm.
Dialogue: 0,0:24:32.36,0:24:33.48,Default,,0,0,0,,Cô không bị thương chứ?
Dialogue: 0,0:24:56.04,0:24:57.28,Default,,0,0,0,,Linh khí xung quanh nơi này
Dialogue: 0,0:24:57.36,0:24:58.44,Default,,0,0,0,,tự tạo thành màng chắn,
Dialogue: 0,0:24:59.20,0:25:01.44,Default,,0,0,0,,ắt là nơi có tiên mạch của núi Đại Trạch.
Dialogue: 0,0:25:11.72,0:25:14.80,Default,,0,0,0,,Ta vất vả tìm kiếm bao ngày,\Ncuối cùng cũng tìm được tiên mạch này.
Dialogue: 0,0:25:15.68,0:25:18.24,Default,,0,0,0,,Chỉ là uy lực\Ncủa ô Già Thiên quá đáng gờm.
Dialogue: 0,0:25:18.92,0:25:20.16,Default,,0,0,0,,Ta phải vào đó thế nào đây?
Dialogue: 0,0:25:28.64,0:25:29.60,Default,,0,0,0,,Kẻ nào?
Dialogue: 0,0:25:38.08,0:25:39.36,Default,,0,0,0,,Nhàn Trúc sư thúc ạ,
Dialogue: 0,0:25:40.04,0:25:41.36,Default,,0,0,0,,người về từ lúc nào thế?
Dialogue: 0,0:25:41.44,0:25:42.52,Default,,0,0,0,,Hai ngày không gặp rồi,
Dialogue: 0,0:25:42.60,0:25:44.64,Default,,0,0,0,,người đã tìm sách\Ndưới nhân gian hai năm đó ạ.
Dialogue: 0,0:25:45.80,0:25:48.56,Default,,0,0,0,,Ta đã tốn hơi nhiều thời gian.
Dialogue: 0,0:25:48.64,0:25:50.56,Default,,0,0,0,,Con đừng nói chuyện này với ai nhé.
Dialogue: 0,0:25:52.76,0:25:54.24,Default,,0,0,0,,Nhưng sư thúc ơi,
Dialogue: 0,0:25:54.32,0:25:56.72,Default,,0,0,0,,nửa đêm nửa hôm người ở đây làm gì vậy?
Dialogue: 0,0:25:57.40,0:26:00.44,Default,,0,0,0,,Ta kiểm tra cấm địa,\Ndạo này núi Đại Trạch đông người phức tạp,
Dialogue: 0,0:26:01.00,0:26:02.48,Default,,0,0,0,,không thể để ai đến gần chỗ này.
Dialogue: 0,0:26:03.04,0:26:04.16,Default,,0,0,0,,Vậy con đi tuần tra xem.
Dialogue: 0,0:26:04.24,0:26:06.68,Default,,0,0,0,,Không cần đâu, sư thúc đã kiểm tra rồi.
Dialogue: 0,0:26:06.76,0:26:08.08,Default,,0,0,0,,Con về nghỉ ngơi sớm đi.
Dialogue: 0,0:26:14.24,0:26:20.36,Default,,0,0,0,,ĐIỆN DIÊN THIÊN, TÀNG THƯ CÁC,\NĐIỆN KỲ NGUYỆT, CỔNG TRỜI, CẤM CỐC
Dialogue: 0,0:26:21.16,0:26:23.24,Default,,0,0,0,,Màng chắn linh lực\Nngoài tiên mạch không sao,
Dialogue: 0,0:26:23.32,0:26:24.88,Default,,0,0,0,,tiên mạch cũng không làm sao hết.
Dialogue: 0,0:26:26.16,0:26:27.12,Default,,0,0,0,,Bây giờ,
Dialogue: 0,0:26:27.20,0:26:28.40,Default,,0,0,0,,điều ta lo nhất
Dialogue: 0,0:26:28.92,0:26:29.84,Default,,0,0,0,,vẫn là A Tấn.
Dialogue: 0,0:26:31.00,0:26:32.40,Default,,0,0,0,,Kiếp nạn lại tới gần rồi à?
Dialogue: 0,0:26:41.52,0:26:42.36,Default,,0,0,0,,Ta đã tính rồi,
Dialogue: 0,0:26:43.12,0:26:45.16,Default,,0,0,0,,nếu A Tấn động lòng với A Âm
Dialogue: 0,0:26:45.64,0:26:47.84,Default,,0,0,0,,thì sẽ rước tới kiếp nạn.
Dialogue: 0,0:26:48.44,0:26:50.52,Default,,0,0,0,,Sao A Tấn có thể động lòng với A Âm chứ?
Dialogue: 0,0:26:51.08,0:26:52.68,Default,,0,0,0,,Đệ ấy luôn mến mộ Hoa Thù cơ mà?
Dialogue: 0,0:26:54.20,0:26:56.16,Default,,0,0,0,,Dù sao hai đứa nó vẫn còn trẻ,
Dialogue: 0,0:26:56.24,0:26:59.24,Default,,0,0,0,,có lẽ đã sinh tình mà không biết,\Ncắt không đứt, gỡ càng rối hơn.
Dialogue: 0,0:27:00.00,0:27:01.48,Default,,0,0,0,,Khó nói lắm.
Dialogue: 0,0:27:02.76,0:27:05.04,Default,,0,0,0,,Nếu chờ đến lúc khó kiềm chế tình cảm
Dialogue: 0,0:27:05.56,0:27:06.84,Default,,0,0,0,,thì đã muộn rồi.
Dialogue: 0,0:27:07.76,0:27:09.28,Default,,0,0,0,,Một khi kiếp nạn đến
Dialogue: 0,0:27:10.40,0:27:12.04,Default,,0,0,0,,sẽ là tử kiếp.
Dialogue: 0,0:27:15.32,0:27:18.16,Default,,0,0,0,,Nếu thúc đẩy nhân duyên với Hoa Thù\Ncho A Tấn thì sao?
Dialogue: 0,0:27:23.28,0:27:24.12,Default,,0,0,0,,Nghĩ thêm đã.
Dialogue: 0,0:27:26.00,0:27:27.32,Default,,0,0,0,,Chúng ta
Dialogue: 0,0:27:27.40,0:27:28.60,Default,,0,0,0,,cùng nghĩ thêm xem đã.
Dialogue: 0,0:27:34.32,0:27:35.40,Default,,0,0,0,,Phụ vương.
Dialogue: 0,0:27:35.48,0:27:36.72,Default,,0,0,0,,Phụ vương cứu con với.
Dialogue: 0,0:27:36.80,0:27:37.64,Default,,0,0,0,,Phụ vương.
Dialogue: 0,0:27:38.28,0:27:39.16,Default,,0,0,0,,Yến Khâu.
Dialogue: 0,0:27:40.20,0:27:41.80,Default,,0,0,0,,Tộc Ưng ức hiếp người quá đáng.
Dialogue: 0,0:27:42.36,0:27:43.28,Default,,0,0,0,,Hoa Mặc,
Dialogue: 0,0:27:43.36,0:27:45.20,Default,,0,0,0,,ta đã cho ngươi kỳ hạn một tháng.
Dialogue: 0,0:27:45.28,0:27:47.64,Default,,0,0,0,,Hôm nay, tộc Khổng Tước các ngươi
Dialogue: 0,0:27:48.36,0:27:49.44,Default,,0,0,0,,cần đưa ra câu trả lời.
Dialogue: 0,0:27:52.60,0:27:54.64,Default,,0,0,0,,Nếu ông vẫn không nói
Dialogue: 0,0:27:54.72,0:27:57.16,Default,,0,0,0,,thì ta sẽ biến hắn trở về\Nnguyên hình khổng tước.
Dialogue: 0,0:27:58.12,0:27:59.48,Default,,0,0,0,,Rồi nhổ lông đuôi,
Dialogue: 0,0:28:00.08,0:28:02.36,Default,,0,0,0,,hủy nội đan của hắn\Ntrước mặt toàn quân hai tộc.
Dialogue: 0,0:28:02.92,0:28:05.76,Default,,0,0,0,,Phụ vương. Người nhất định\Nphải đồng ý với họ. Phụ vương.
Dialogue: 0,0:28:10.52,0:28:12.48,Default,,0,0,0,,Phụ vương nhất định phải đồng ý với họ.
Dialogue: 0,0:28:12.56,0:28:13.56,Default,,0,0,0,,Khoan đã.
Dialogue: 0,0:28:30.88,0:28:33.68,Default,,0,0,0,,Muốn ức hiếp tộc Khổng Tước ta,
Dialogue: 0,0:28:33.76,0:28:34.88,Default,,0,0,0,,các ngươi cũng xứng ư?
Dialogue: 0,0:28:37.84,0:28:39.28,Default,,0,0,0,,Ô Già Thiên của Cổ Tấn?
Dialogue: 0,0:28:40.36,0:28:41.72,Default,,0,0,0,,Khởi trận, phòng ngự!
Dialogue: 0,0:28:41.80,0:28:43.00,Default,,0,0,0,,- Rõ!\N- Rõ!
Dialogue: 0,0:28:47.56,0:28:49.76,Default,,0,0,0,,Hoa Thù đã thăng lên thượng quân rồi sao?
Dialogue: 0,0:29:18.92,0:29:19.76,Default,,0,0,0,,Phụ vương.
Dialogue: 0,0:29:27.24,0:29:28.40,Default,,0,0,0,,Uy lực mạnh quá,
Dialogue: 0,0:29:28.92,0:29:30.76,Default,,0,0,0,,không lẽ cô ta đã luyện hóa ô Già Thiên?
Dialogue: 0,0:29:41.32,0:29:42.28,Default,,0,0,0,,Phụ vương.
Dialogue: 0,0:30:13.92,0:30:15.44,Default,,0,0,0,,Dừng tay!
Dialogue: 0,0:30:21.88,0:30:23.28,Default,,0,0,0,,Bọn ta chịu thua.
Dialogue: 0,0:30:32.84,0:30:34.12,Default,,0,0,0,,THƯ ĐẦU HÀNG
Dialogue: 0,0:31:00.84,0:31:02.00,Default,,0,0,0,,Như vậy sẽ không nhìn ra
Dialogue: 0,0:31:02.08,0:31:04.52,Default,,0,0,0,,đây là vết thương do\Nkhí Thiên Cang của ô Già Thiên gây ra.
Dialogue: 0,0:31:04.60,0:31:06.24,Default,,0,0,0,,Không ai phát hiện ra ngươi đâu.
Dialogue: 0,0:31:06.96,0:31:09.40,Default,,0,0,0,,Nếu ngươi đã xác định được\Ntiên mạch của núi Đại Trạch
Dialogue: 0,0:31:10.40,0:31:11.92,Default,,0,0,0,,thì chỉ cần đặt cái này
Dialogue: 0,0:31:13.44,0:31:14.84,Default,,0,0,0,,vào tiên mạch.
Dialogue: 0,0:31:23.36,0:31:24.56,Default,,0,0,0,,Dừng tay.
Dialogue: 0,0:31:24.64,0:31:27.84,Default,,0,0,0,,Thứ trong này\Nsẽ nảy mầm ngay khi gieo xuống đất.
Dialogue: 0,0:31:28.52,0:31:30.76,Default,,0,0,0,,Nó sẽ hấp thụ linh lực,\Nlan ra, nuốt chửng tất cả.
Dialogue: 0,0:31:31.96,0:31:33.72,Default,,0,0,0,,Chớ để nó nuốt sống ngươi.
Dialogue: 0,0:31:34.52,0:31:35.40,Default,,0,0,0,,Tăng tốc độ đi.
Dialogue: 0,0:31:35.48,0:31:37.24,Default,,0,0,0,,Cổ Tấn đã thăng lên hạ quân.
Dialogue: 0,0:31:38.08,0:31:40.44,Default,,0,0,0,,Đợi hắn tìm được tất cả\Ntiên nguyên phượng hoàng nhỏ,
Dialogue: 0,0:31:41.12,0:31:44.44,Default,,0,0,0,,phượng hoàng trở về,\Nngươi sẽ không còn cơ hội nữa đâu.
Dialogue: 0,0:31:45.64,0:31:48.16,Default,,0,0,0,,Tuy đảo Bách Điểu đã mượn ô Già Thiên,
Dialogue: 0,0:31:48.24,0:31:49.20,Default,,0,0,0,,nhưng khí Thiên Cang
Dialogue: 0,0:31:49.28,0:31:50.64,Default,,0,0,0,,vẫn đang bảo vệ núi Đại Trạch.
Dialogue: 0,0:31:50.72,0:31:52.64,Default,,0,0,0,,Ta hoàn toàn không thể vào được tiên mạch.
Dialogue: 0,0:31:52.72,0:31:53.56,Default,,0,0,0,,Yên tâm.
Dialogue: 0,0:31:53.64,0:31:56.80,Default,,0,0,0,,Kết giới của ô Già Thiên ở tiên mạch\Nđang dần biến mất.
Dialogue: 0,0:31:57.76,0:32:00.16,Default,,0,0,0,,Có lẽ có người đang âm thầm luyện hóa\Nô Già Thiên.
Dialogue: 0,0:32:00.72,0:32:02.40,Default,,0,0,0,,Đúng là trời cũng giúp ta.
Dialogue: 0,0:32:05.76,0:32:06.88,Default,,0,0,0,,NÚI ĐẠI TRẠCH, TIÊN GIỚI
Dialogue: 0,0:32:06.96,0:32:09.64,Default,,0,0,0,,Khi đó Hoa Thù thăng cấp thượng quân,
Dialogue: 0,0:32:09.72,0:32:11.28,Default,,0,0,0,,dùng ô Già Thiên đệ tặng
Dialogue: 0,0:32:11.36,0:32:13.36,Default,,0,0,0,,đánh bại Ưng vương, một trận thành danh.
Dialogue: 0,0:32:13.92,0:32:15.52,Default,,0,0,0,,Đảo Bách Điểu đại thắng.
Dialogue: 0,0:32:15.60,0:32:17.84,Default,,0,0,0,,Trước mắt, tộc Ưng và tộc Khổng Tước
Dialogue: 0,0:32:17.92,0:32:19.40,Default,,0,0,0,,đã đình chiến và nghị hòa.
Dialogue: 0,0:32:20.04,0:32:23.32,Default,,0,0,0,,Nhưng chúng ta trước giờ\Nkhông nhúng tay chuyện tộc khác.
Dialogue: 0,0:32:23.88,0:32:26.88,Default,,0,0,0,,Lần này do ta tùy hứng cho mượn ô\Nđã gây phiền phức cho sơn môn.
Dialogue: 0,0:32:27.56,0:32:29.72,Default,,0,0,0,,Không sao, đợi hai người thành thân,
Dialogue: 0,0:32:29.80,0:32:32.28,Default,,0,0,0,,núi Đại Trạch và đảo Khổng Tước\Nsẽ là thông gia,
Dialogue: 0,0:32:32.84,0:32:34.52,Default,,0,0,0,,giúp đỡ lẫn nhau cũng là bình thường.
Dialogue: 0,0:32:34.60,0:32:35.56,Default,,0,0,0,,Gì mà thành thân?
Dialogue: 0,0:32:37.24,0:32:39.64,Default,,0,0,0,,Ta và Hoa Thù\Nchưa tới mức đó đâu, sư huynh.
Dialogue: 0,0:32:40.20,0:32:42.88,Default,,0,0,0,,Nam chưa dựng vợ, nữ chưa gả chồng,\Nđệ thích cô ấy,
Dialogue: 0,0:32:42.96,0:32:45.04,Default,,0,0,0,,các sư huynh đương nhiên ủng hộ đệ.
Dialogue: 0,0:32:45.52,0:32:48.04,Default,,0,0,0,,Nhưng sư huynh, ta thấy
Dialogue: 0,0:32:48.12,0:32:50.72,Default,,0,0,0,,chuyện thu thập tiên nguyên\Ncho Phượng Ẩn vẫn chưa xong.
Dialogue: 0,0:32:50.80,0:32:53.60,Default,,0,0,0,,Ta nghĩ đợi làm xong chuyện này\Nrồi mới bàn chuyện khác.
Dialogue: 0,0:32:53.68,0:32:55.96,Default,,0,0,0,,Thu thập tiên nguyên\Ntiểu phượng quân quan trọng.
Dialogue: 0,0:32:56.04,0:32:57.96,Default,,0,0,0,,Nhưng hôn sự này cũng vô cùng cấp bách.
Dialogue: 0,0:32:58.52,0:33:00.00,Default,,0,0,0,,Tiệc thọ thần của Khổng Tước vương
Dialogue: 0,0:33:00.08,0:33:03.32,Default,,0,0,0,,mời tiên quân các môn phái,\Nnúi Đại Trạch đã nhận được thiệp mời.
Dialogue: 0,0:33:03.88,0:33:07.40,Default,,0,0,0,,Tiên giới đang đồn, Khổng Tước vương\Nthực ra là muốn công khai kén rể.
Dialogue: 0,0:33:07.96,0:33:09.16,Default,,0,0,0,,Nghe nói không ít tiên môn
Dialogue: 0,0:33:09.24,0:33:11.52,Default,,0,0,0,,đều mang bảo bối nhà mình tới cầu hôn.
Dialogue: 0,0:33:12.08,0:33:13.92,Default,,0,0,0,,Nếu để tiên phủ khác tới trước,
Dialogue: 0,0:33:14.00,0:33:15.88,Default,,0,0,0,,đệ sẽ hối tiếc trốn vào một góc khóc đấy.
Dialogue: 0,0:33:16.52,0:33:17.36,Default,,0,0,0,,Nhàn Trúc.
Dialogue: 0,0:33:24.60,0:33:25.44,Default,,0,0,0,,Đây là…
Dialogue: 0,0:33:25.52,0:33:28.80,Default,,0,0,0,,Lúc sư tôn phi thăng cũng để lại\Nbảo bối cho ta và đại sư huynh.
Dialogue: 0,0:33:29.40,0:33:32.20,Default,,0,0,0,,Ta tặng lại cho đệ\Nmũ phượng Huyền Tinh này.
Dialogue: 0,0:33:33.04,0:33:34.12,Default,,0,0,0,,Nó là bán thần khí,
Dialogue: 0,0:33:34.72,0:33:37.20,Default,,0,0,0,,đệ mang nó đi cầu hôn\Nchắc chắn không kém cạnh ai.
Dialogue: 0,0:33:38.00,0:33:40.88,Default,,0,0,0,,Tưởng tượng cảnh nữ tử đệ thích đội nó
Dialogue: 0,0:33:40.96,0:33:42.32,Default,,0,0,0,,đúng là vô cùng đáng mong đợi.
Dialogue: 0,0:33:52.88,0:33:53.92,Default,,0,0,0,,Không được.
Dialogue: 0,0:33:54.76,0:33:56.44,Default,,0,0,0,,Ta vẫn thấy chuyện này quá đường đột.
Dialogue: 0,0:33:56.52,0:33:58.76,Default,,0,0,0,,Hơn nữa, giờ A Âm vẫn đang giận dỗi ta,
Dialogue: 0,0:33:58.84,0:34:00.36,Default,,0,0,0,,cũng chưa tìm được núi Ngưng Vân.
Dialogue: 0,0:34:01.00,0:34:02.72,Default,,0,0,0,,- Trong lòng ta cứ thấy…\N- A Tấn.
Dialogue: 0,0:34:04.60,0:34:08.00,Default,,0,0,0,,Không phải đệ luôn thích Hoa Thù,\Nmuốn lấy cô ấy làm tiên lữ của mình sao?
Dialogue: 0,0:34:08.08,0:34:10.96,Default,,0,0,0,,Đệ không được đứng núi này\Ntrông núi nọ, bạc tình bội nghĩa.
Dialogue: 0,0:34:11.04,0:34:12.52,Default,,0,0,0,,Chuyện đệ cho Hoa Thù
Dialogue: 0,0:34:12.60,0:34:14.96,Default,,0,0,0,,mượn ô Già Thiên đã truyền khắp tam giới.
Dialogue: 0,0:34:15.56,0:34:17.00,Default,,0,0,0,,Nếu lúc này chùn bước
Dialogue: 0,0:34:17.08,0:34:19.40,Default,,0,0,0,,sẽ chỉ khiến người ta\Nbàn tán không hay về Hoa Thù.
Dialogue: 0,0:34:19.96,0:34:20.80,Default,,0,0,0,,A Tấn,
Dialogue: 0,0:34:20.88,0:34:22.04,Default,,0,0,0,,hai ta đều là nam tử,
Dialogue: 0,0:34:22.12,0:34:23.56,Default,,0,0,0,,trong tim hoài bão lớn,
Dialogue: 0,0:34:24.12,0:34:26.28,Default,,0,0,0,,cũng phải có quyết tâm\Nbảo vệ người mình yêu.
Dialogue: 0,0:34:33.68,0:34:35.36,Default,,0,0,0,,Ta đã lấy thân phận chưởng giáo
Dialogue: 0,0:34:35.44,0:34:36.80,Default,,0,0,0,,viết thư cầu hôn cho đệ.
Dialogue: 0,0:34:36.88,0:34:38.60,Default,,0,0,0,,Để Thanh Y chuẩn bị xe tiên,
Dialogue: 0,0:34:38.68,0:34:41.80,Default,,0,0,0,,đệ mang theo thư cầu hôn và mũ phượng\Nđến đảo Bách Điểu.
Dialogue: 0,0:34:41.88,0:34:43.40,Default,,0,0,0,,Mau chóng ấn định mối hôn sự này.
Dialogue: 0,0:35:05.08,0:35:06.12,Default,,0,0,0,,Tiểu sư thúc.
Dialogue: 0,0:35:07.72,0:35:10.72,Default,,0,0,0,,Người thu xếp xong chưa?\NNgười đi qua đi lại trong viện làm gì?
Dialogue: 0,0:35:11.88,0:35:13.24,Default,,0,0,0,,Người muốn đưa A Âm theo
Dialogue: 0,0:35:13.32,0:35:14.48,Default,,0,0,0,,hay muốn từ biệt cô ấy?
Dialogue: 0,0:35:15.32,0:35:16.16,Default,,0,0,0,,Lắm lời.
Dialogue: 0,0:35:17.64,0:35:19.64,Default,,0,0,0,,Ta chỉ đang nghĩ có để quên gì không.
Dialogue: 0,0:35:19.72,0:35:21.24,Default,,0,0,0,,Quà mừng thọ, sính lễ,
Dialogue: 0,0:35:21.32,0:35:23.84,Default,,0,0,0,,những gì cần con đều chuẩn bị\Nvà để trong xe tiên rồi.
Dialogue: 0,0:35:23.92,0:35:26.56,Default,,0,0,0,,Giờ tiểu sư thúc chỉ cần ngồi vào xe tiên,
Dialogue: 0,0:35:26.64,0:35:28.92,Default,,0,0,0,,chuyện đến đảo Bách Điểu\Ncầu hôn sẽ vẹn toàn.
Dialogue: 0,0:35:29.00,0:35:31.48,Default,,0,0,0,,Nhưng nếu người cứ trì hoãn\Nkhông chịu xuất phát,
Dialogue: 0,0:35:31.56,0:35:33.28,Default,,0,0,0,,- chúng ta sẽ…\N- Đừng hối nữa.
Dialogue: 0,0:35:34.72,0:35:35.84,Default,,0,0,0,,Đợi ta.
Dialogue: 0,0:35:41.24,0:35:42.28,Default,,0,0,0,,Thanh Y.
Dialogue: 0,0:35:44.52,0:35:46.44,Default,,0,0,0,,Huynh ấy vội vã đi đâu vậy?
Dialogue: 0,0:35:46.92,0:35:48.76,Default,,0,0,0,,Tiểu sư cô không nghe nói sao?
Dialogue: 0,0:35:48.84,0:35:51.40,Default,,0,0,0,,Tiểu sư thúc tới đảo Bách Điểu\Ncầu hôn Hoa Thù điện hạ.
Dialogue: 0,0:35:51.88,0:35:52.92,Default,,0,0,0,,Cầu hôn?
Dialogue: 0,0:35:54.20,0:35:57.04,Default,,0,0,0,,Huynh ấy muốn lấy Hoa Thù ư?
Dialogue: 0,0:35:57.68,0:35:59.44,Default,,0,0,0,,Tiểu sư cô, người sao thế?
Dialogue: 0,0:36:00.00,0:36:02.16,Default,,0,0,0,,Nhìn sắc mặt người không tốt lắm.
Dialogue: 0,0:36:02.96,0:36:05.20,Default,,0,0,0,,Không phải người\Nkhông muốn thúc ấy đi chứ?
Dialogue: 0,0:36:09.16,0:36:10.92,Default,,0,0,0,,Làm gì có.
Dialogue: 0,0:36:11.76,0:36:12.76,Default,,0,0,0,,- Thì…\N- A Âm.
Dialogue: 0,0:36:15.48,0:36:16.48,Default,,0,0,0,,Cô về rồi.
Dialogue: 0,0:36:16.56,0:36:17.72,Default,,0,0,0,,- Ta…\N- Ta biết
Dialogue: 0,0:36:17.80,0:36:19.52,Default,,0,0,0,,huynh phải tới đảo Bách Điểu cầu hôn.
Dialogue: 0,0:36:21.12,0:36:23.12,Default,,0,0,0,,Vừa rồi Thanh Y đã nói với ta rồi.
Dialogue: 0,0:36:23.60,0:36:25.96,Default,,0,0,0,,Nếu huynh muốn đi thì đừng lề mề nữa.
Dialogue: 0,0:36:26.04,0:36:29.52,Default,,0,0,0,,Đúng, con người huynh làm việc gì\Ncũng lề mà lề mề,
Dialogue: 0,0:36:29.60,0:36:30.48,Default,,0,0,0,,nếu huynh tới muộn,
Dialogue: 0,0:36:30.56,0:36:33.08,Default,,0,0,0,,công chúa Hoa Thù\Nsẽ bị tiên quân khác giành mất đấy.
Dialogue: 0,0:36:33.16,0:36:34.00,Default,,0,0,0,,Ta nói huynh biết,
Dialogue: 0,0:36:34.56,0:36:36.84,Default,,0,0,0,,huynh luôn một lòng với cô ấy,
Dialogue: 0,0:36:36.92,0:36:38.72,Default,,0,0,0,,thế nên phải nhân cơ hội này
Dialogue: 0,0:36:39.72,0:36:41.12,Default,,0,0,0,,thể hiện thật tốt.
Dialogue: 0,0:36:41.20,0:36:43.56,Default,,0,0,0,,Hôm nay ta thấy không khỏe
Dialogue: 0,0:36:43.64,0:36:46.08,Default,,0,0,0,,nên ta không đi đâu,\Ntránh gây phiền phức cho huynh.
Dialogue: 0,0:36:46.80,0:36:47.92,Default,,0,0,0,,Huynh mau đi đi.
Dialogue: 0,0:36:48.88,0:36:49.72,Default,,0,0,0,,Ta về đây.
Dialogue: 0,0:36:51.32,0:36:52.32,Default,,0,0,0,,A Âm.
Dialogue: 0,0:37:38.56,0:37:41.04,Default,,0,0,0,,SÔNG TỀ HÒA, NƠI NÀY NGUY HIỂM,\NPHẢI ĐỢI TA VỀ CÙNG TÌM
Dialogue: 0,0:37:41.12,0:37:44.00,Default,,0,0,0,,SUỐI THẬP CẨM
Dialogue: 0,0:37:48.16,0:37:49.36,Default,,0,0,0,,Mộng Hồi cốc
Dialogue: 0,0:37:49.44,0:37:51.00,Default,,0,0,0,,địa thế hẻo lánh, cây cối um tùm,
Dialogue: 0,0:37:51.56,0:37:53.36,Default,,0,0,0,,có thể là nơi ẩn náu của núi Ngưng Vân.
Dialogue: 0,0:37:53.92,0:37:56.08,Default,,0,0,0,,Núi Kỳ Viễn, dưới sông Hà Phong,
Dialogue: 0,0:37:56.16,0:37:57.56,Default,,0,0,0,,địa hình kỳ lạ, dễ lạc đường,
Dialogue: 0,0:37:57.64,0:37:58.80,Default,,0,0,0,,tộc Yêu khó mà tới gần,
Dialogue: 0,0:37:58.88,0:38:00.08,Default,,0,0,0,,đợi ta trở về rồi tìm.
Dialogue: 0,0:38:00.92,0:38:02.80,Default,,0,0,0,,Sông Tề Hòa, nơi này nguy hiểm,
Dialogue: 0,0:38:02.88,0:38:04.24,Default,,0,0,0,,phải đợi ta về cùng tìm.
Dialogue: 0,0:38:29.16,0:38:32.36,Default,,0,0,0,,ĐẢO BÁCH ĐIỂU, TIÊN GIỚI
Dialogue: 0,0:38:51.68,0:38:53.92,Default,,0,0,0,,Cổ Tấn núi Đại Trạch\Nthay mặt chưởng giáo sư huynh
Dialogue: 0,0:38:54.00,0:38:55.56,Default,,0,0,0,,tới chúc thọ Khổng Tước vương.
Dialogue: 0,0:38:55.64,0:38:57.28,Default,,0,0,0,,Khổng Tước vương đã đặc biệt dặn dò,
Dialogue: 0,0:38:57.36,0:38:59.12,Default,,0,0,0,,nếu khách quý của núi Đại Trạch tới,
Dialogue: 0,0:38:59.20,0:39:01.00,Default,,0,0,0,,bảo ta đích thân đón vào đảo.
Dialogue: 0,0:39:01.08,0:39:02.96,Default,,0,0,0,,Cổ Tấn trưởng lão, mời.
Dialogue: 0,0:39:13.96,0:39:15.60,Default,,0,0,0,,Cổ Tấn tham kiến Khổng Tước vương.
Dialogue: 0,0:39:16.68,0:39:17.96,Default,,0,0,0,,Cổ Tấn thế điệt,
Dialogue: 0,0:39:18.04,0:39:20.04,Default,,0,0,0,,bổn vương thất lễ không nghênh đón từ xa.
Dialogue: 0,0:39:21.52,0:39:24.32,Default,,0,0,0,,Nhờ có thế điệt\Ncho Thù Nhi mượn ô Già Thiên,
Dialogue: 0,0:39:24.40,0:39:26.24,Default,,0,0,0,,đảo Bách Điểu mới thoát khỏi mối nguy.
Dialogue: 0,0:39:27.08,0:39:28.60,Default,,0,0,0,,Ơn đức lớn như vậy,
Dialogue: 0,0:39:28.68,0:39:30.24,Default,,0,0,0,,bổn vương khắc ghi trong lòng.
Dialogue: 0,0:39:32.48,0:39:34.72,Default,,0,0,0,,Chút quà nhỏ không bày tỏ hết sự tôn kính.
Dialogue: 0,0:39:36.84,0:39:37.72,Default,,0,0,0,,Tiên tôn,
Dialogue: 0,0:39:37.80,0:39:40.76,Default,,0,0,0,,ta giúp Hoa Thù điện hạ\Nlà xuất phát từ đạo nghĩa giữa bạn bè.
Dialogue: 0,0:39:41.32,0:39:42.68,Default,,0,0,0,,Những món quà này quá quý giá,
Dialogue: 0,0:39:42.76,0:39:43.92,Default,,0,0,0,,Cổ Tấn không dám nhận.
Dialogue: 0,0:39:44.56,0:39:45.84,Default,,0,0,0,,Xin ngài lấy về đi.
Dialogue: 0,0:39:47.92,0:39:49.24,Default,,0,0,0,,Cũng phải,
Dialogue: 0,0:39:49.32,0:39:51.04,Default,,0,0,0,,thế điệt và Thù Nhi có quan hệ tốt,
Dialogue: 0,0:39:51.12,0:39:54.24,Default,,0,0,0,,là bổn vương đã mạo phạm\Ntâm ý của thế điệt.
Dialogue: 0,0:39:59.36,0:40:00.28,Default,,0,0,0,,Đúng rồi.
Dialogue: 0,0:40:00.84,0:40:04.00,Default,,0,0,0,,Lúc trước Hoa Thù đấu với Ưng vương,\Nsức khỏe vẫn ổn chứ?
Dialogue: 0,0:40:04.56,0:40:05.76,Default,,0,0,0,,Cảm ơn thế điệt quan tâm.
Dialogue: 0,0:40:07.04,0:40:09.64,Default,,0,0,0,,Thù Nhi chiến đấu với Yến Khâu\Ntổn hao tiên lực,
Dialogue: 0,0:40:09.72,0:40:11.12,Default,,0,0,0,,giờ đang bế quan.
Dialogue: 0,0:40:11.68,0:40:15.16,Default,,0,0,0,,E phải đợi đến tiệc mừng thọ\Nmới có thể xuất quan.
Dialogue: 0,0:40:15.92,0:40:16.88,Default,,0,0,0,,Tiểu sư thúc.
Dialogue: 0,0:40:20.64,0:40:21.60,Default,,0,0,0,,Tiên tôn,
Dialogue: 0,0:40:21.68,0:40:23.04,Default,,0,0,0,,thực ra lần này ta tới
Dialogue: 0,0:40:23.12,0:40:25.96,Default,,0,0,0,,ngoài để chúc thọ ngài\Ncòn có một chuyện muốn bàn bạc với ngài.
Dialogue: 0,0:40:26.80,0:40:27.80,Default,,0,0,0,,Cứ nói đừng ngại.
Dialogue: 0,0:40:28.36,0:40:29.52,Default,,0,0,0,,Chắc ngài cũng biết
Dialogue: 0,0:40:30.28,0:40:32.88,Default,,0,0,0,,ô Già Thiên luôn là\Nthần khí bảo vệ núi của sơn môn ta,
Dialogue: 0,0:40:32.96,0:40:34.96,Default,,0,0,0,,bảo vệ sự an toàn của núi Đại Trạch ta.
Dialogue: 0,0:40:35.04,0:40:37.48,Default,,0,0,0,,Giờ nguy cơ của đảo Bách Điểu\Nđã được giải trừ.
Dialogue: 0,0:40:37.56,0:40:39.56,Default,,0,0,0,,Cổ Tấn muốn lấy lại ô Già Thiên.
Dialogue: 0,0:40:44.44,0:40:45.28,Default,,0,0,0,,Thế điệt,
Dialogue: 0,0:40:45.76,0:40:48.20,Default,,0,0,0,,ô Già Thiên\Nchắc chắn phải trả lại cho thế điệt.
Dialogue: 0,0:40:48.76,0:40:50.52,Default,,0,0,0,,Nhưng giờ ô ở trong tay Thù Nhi.
Dialogue: 0,0:40:51.16,0:40:52.00,Default,,0,0,0,,Hay là thế này,
Dialogue: 0,0:40:52.08,0:40:54.80,Default,,0,0,0,,đợi con bé xuất quan,\Nđể nó đích thân trả lại cậu nhé.
Dialogue: 0,0:40:56.28,0:40:58.24,Default,,0,0,0,,Cũng chỉ đành như vậy.
Dialogue: 0,0:40:58.84,0:41:00.04,Default,,0,0,0,,Hoa Mặc tiên tôn.
Dialogue: 0,0:41:00.12,0:41:03.36,Default,,0,0,0,,ĐÌNH QUY NGUYỆT
Dialogue: 0,0:41:03.44,0:41:04.44,Default,,0,0,0,,Có chuyện gì?
Dialogue: 0,0:41:04.52,0:41:06.92,Default,,0,0,0,,Tiên tôn, tiểu sư thúc nhà ta\Nđã yêu Hoa Thù điện hạ
Dialogue: 0,0:41:07.00,0:41:08.80,Default,,0,0,0,,từ cái nhìn đầu tiên ở đảo Ngô Đồng.
Dialogue: 0,0:41:08.88,0:41:11.52,Default,,0,0,0,,Mười năm nay chưa thay đổi.\NLần này, tiểu sư thúc đến đây
Dialogue: 0,0:41:11.60,0:41:13.24,Default,,0,0,0,,là để cầu hôn Hoa Thù điện hạ.
Dialogue: 0,0:41:13.32,0:41:15.24,Default,,0,0,0,,Chỉ là người quá kích động,
Dialogue: 0,0:41:15.32,0:41:17.32,Default,,0,0,0,,không biết nên mở lời với ngài thế nào.
Dialogue: 0,0:41:17.88,0:41:21.84,Default,,0,0,0,,Đây là thư cầu hôn và sính lễ, mũ phượng\NHuyền Tinh mà sư tôn chuẩn bị cho sư thúc.
Dialogue: 0,0:41:22.64,0:41:25.20,Default,,0,0,0,,Mong tiên tôn gả Hoa Thù điện hạ\Ncho tiểu sư thúc nhà ta.
Dialogue: 0,0:41:25.84,0:41:29.28,Default,,0,0,0,,Cổ Tấn tiểu sư thúc có tấm lòng nhân hậu,\Nnhất định sẽ bảo vệ điện hạ cả đời.
Dialogue: 0,0:41:29.36,0:41:31.08,Default,,0,0,0,,Mũ phượng Huyền Tinh.
Dialogue: 0,0:41:41.44,0:41:42.40,Default,,0,0,0,,Đây là
Dialogue: 0,0:41:43.00,0:41:44.08,Default,,0,0,0,,bán thần khí đấy.
Dialogue: 0,0:41:44.64,0:41:47.56,Default,,0,0,0,,Sính lễ của Cổ Tấn có quý giá hơn,\Nngười cũng không thể cứ nhận.
Dialogue: 0,0:41:48.72,0:41:50.32,Default,,0,0,0,,Ta cũng chỉ nhận sính lễ
Dialogue: 0,0:41:50.40,0:41:52.08,Default,,0,0,0,,chứ đâu hứa hẹn gì với núi Đại Trạch.
Dialogue: 0,0:41:52.16,0:41:54.96,Default,,0,0,0,,Hơn nữa, ta cũng không tiện\Ntừ chối thẳng cậu ấy được.
Dialogue: 0,0:41:57.80,0:41:58.92,Default,,0,0,0,,Thù Nhi,
Dialogue: 0,0:41:59.00,0:42:00.72,Default,,0,0,0,,lần này Cổ Tấn tới
Dialogue: 0,0:42:00.80,0:42:02.48,Default,,0,0,0,,là muốn lấy lại ô Già Thiên.
Dialogue: 0,0:42:03.04,0:42:05.68,Default,,0,0,0,,Nếu cậu ta biết thần khí của Đông Hoa\Nđã bị con luyện hóa,
Dialogue: 0,0:42:05.76,0:42:08.40,Default,,0,0,0,,e là sẽ không để yên đâu.
Dialogue: 0,0:42:08.96,0:42:10.76,Default,,0,0,0,,Hắn muốn lấy lại ô Già Thiên?
Dialogue: 0,0:42:12.76,0:42:14.84,Default,,0,0,0,,Núi Đại Trạch đứng đầu tiên giới,
Dialogue: 0,0:42:14.92,0:42:15.92,Default,,0,0,0,,nếu vì vậy
Dialogue: 0,0:42:16.00,0:42:18.28,Default,,0,0,0,,mà yêu cầu đảo Bách Điểu ta\Ncho một lời giải thích.
Dialogue: 0,0:42:18.84,0:42:21.76,Default,,0,0,0,,Các phái trong Tiên giới\Nchắc chắn sẽ không về phía chúng ta.
Dialogue: 0,0:42:23.08,0:42:24.08,Default,,0,0,0,,Thế nên phụ vương nghĩ
Dialogue: 0,0:42:24.68,0:42:27.16,Default,,0,0,0,,nếu núi Đại Trạch và đảo Bách Điểu\Nkết thành thông gia,
Dialogue: 0,0:42:27.72,0:42:30.52,Default,,0,0,0,,bọn họ chắc chắn sẽ không\Ntruy cứu chuyện này nữa.
Dialogue: 0,0:42:31.08,0:42:32.68,Default,,0,0,0,,Hơn nữa Cổ Tấn kia
Dialogue: 0,0:42:32.76,0:42:35.84,Default,,0,0,0,,tiên căn thuần hậu,\Nlà người tài có thể bồi dưỡng.
Dialogue: 0,0:42:36.40,0:42:38.40,Default,,0,0,0,,Nhàn Thiện lại xem trọng cậu ta,
Dialogue: 0,0:42:38.48,0:42:42.16,Default,,0,0,0,,sau này rất có khả năng sẽ kế thừa\Nsơn môn núi Đại Trạch.
Dialogue: 0,0:42:43.24,0:42:44.44,Default,,0,0,0,,Con hiểu Cổ Tấn,
Dialogue: 0,0:42:45.92,0:42:47.72,Default,,0,0,0,,đúng là hắn có tiên căn thuần hậu.
Dialogue: 0,0:42:47.80,0:42:50.20,Default,,0,0,0,,Nhưng tính tình lại quá buông thả,
Dialogue: 0,0:42:50.68,0:42:52.76,Default,,0,0,0,,không có tâm tư\Nmuốn đột phá cấp tiên nhanh.
Dialogue: 0,0:42:53.32,0:42:54.28,Default,,0,0,0,,Hơn nữa,
Dialogue: 0,0:42:54.36,0:42:56.44,Default,,0,0,0,,núi Đại Trạch vẫn luôn chỉ lo thân mình.
Dialogue: 0,0:42:56.52,0:42:59.24,Default,,0,0,0,,Sau này cũng sẽ không giúp chúng ta\Ncủng cố đảo Bách Điểu,
Dialogue: 0,0:42:59.32,0:43:00.68,Default,,0,0,0,,kiềm chế tộc Phượng Hoàng.
Dialogue: 0,0:43:00.76,0:43:01.96,Default,,0,0,0,,Vậy là con
Dialogue: 0,0:43:02.92,0:43:04.32,Default,,0,0,0,,chỉ xem trọng Lan Phong?
Dialogue: 0,0:43:04.40,0:43:07.36,Default,,0,0,0,,Chuyện Lan Phong kế nhiệm vị trí thiên đế\Nchỉ là vấn đề thời gian.
Dialogue: 0,0:43:07.84,0:43:09.92,Default,,0,0,0,,Lúc đó, con sẽ là thiên hậu.
Dialogue: 0,0:43:10.48,0:43:13.12,Default,,0,0,0,,Đảo Ngô Đồng cũng phải cung kính\Nvới đảo Bách Điểu ta hơn.
Dialogue: 0,0:43:13.68,0:43:15.20,Default,,0,0,0,,Đều là tiên cầm,
Dialogue: 0,0:43:15.28,0:43:18.64,Default,,0,0,0,,dựa vào đâu tộc Khổng Tước ta\Nsinh ra đã phải tôn phượng hoàng làm vua.
Dialogue: 0,0:43:19.20,0:43:22.32,Default,,0,0,0,,Con không muốn để tộc nhân của con\Nsống những ngày tháng như vậy nữa.
Dialogue: 0,0:43:23.80,0:43:24.64,Default,,0,0,0,,Phụ vương,
Dialogue: 0,0:43:25.48,0:43:26.76,Default,,0,0,0,,phu quân của Hoa Thù con
Dialogue: 0,0:43:26.84,0:43:30.12,Default,,0,0,0,,nhất định phải là chủ nhân của\Ncung Cửu Trùng Thiên, vua của Tiên giới.
Dialogue: 0,0:43:41.20,0:43:42.08,Default,,0,0,0,,A Âm.
Dialogue: 0,0:43:44.80,0:43:46.04,Default,,0,0,0,,Cho cô xem thứ này hay lắm.
