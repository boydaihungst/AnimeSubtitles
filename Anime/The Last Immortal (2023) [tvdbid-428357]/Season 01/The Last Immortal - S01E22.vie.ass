Dialogue: 0,0:01:29.80,0:01:36.68,Default,,0,0,0,,CHUYỂN THỂ TỪ TIỂU THUYẾT CÙNG TÊN\NCỦA TINH LINH
Dialogue: 0,0:01:41.12,0:01:44.04,Default,,0,0,0,,Kẻ giết hại Lan Phong\Nbằng bảo vật Tịch Diệt Luân của tộc Hồ Ly
Dialogue: 0,0:01:45.24,0:01:46.52,Default,,0,0,0,,là Hồng Nhược.
Dialogue: 0,0:01:47.72,0:01:49.32,Default,,0,0,0,,Tộc Yêu xâm phạm Thiên cung ta,
Dialogue: 0,0:01:50.68,0:01:51.64,Default,,0,0,0,,tộc Tiên ta
Dialogue: 0,0:01:52.24,0:01:53.28,Default,,0,0,0,,quyết không nương tay.
Dialogue: 0,0:01:53.36,0:01:54.48,Default,,0,0,0,,- Đúng.\N- Phải.
Dialogue: 0,0:01:54.56,0:01:55.68,Default,,0,0,0,,- Không nương tay.\N- Quyết không nương tay.
Dialogue: 0,0:01:55.76,0:01:56.72,Default,,0,0,0,,- Các vị…\N- Chúng ta phải trả thù.
Dialogue: 0,0:01:56.80,0:01:58.24,Default,,0,0,0,,…khi chưa rõ sự thật
Dialogue: 0,0:01:58.32,0:01:59.52,Default,,0,0,0,,thì đừng nên manh động.
Dialogue: 0,0:01:59.60,0:02:00.80,Default,,0,0,0,,Cần gì phải điều tra nữa?
Dialogue: 0,0:02:01.76,0:02:02.68,Default,,0,0,0,,Trong tam giới này
Dialogue: 0,0:02:03.20,0:02:05.36,Default,,0,0,0,,chỉ có Hồng Nhược,\Nthủ lĩnh tộc Hồ Ly là hồ ly chín đuôi.
Dialogue: 0,0:02:05.96,0:02:07.92,Default,,0,0,0,,Cô ta một mực trung thành với Yêu hoàng,
Dialogue: 0,0:02:08.00,0:02:11.24,Default,,0,0,0,,nếu không phải Yêu hoàng ra lệnh\Nthì sao cô ta vô cớ sát hại Lan Phong?
Dialogue: 0,0:02:12.28,0:02:14.12,Default,,0,0,0,,Ngay trước mắt mọi người,
Dialogue: 0,0:02:14.20,0:02:16.52,Default,,0,0,0,,người cầm quyền của tộc Tiên ta\Ncòn bị sát hại.
Dialogue: 0,0:02:16.60,0:02:17.84,Default,,0,0,0,,Vậy chẳng phải sau này
Dialogue: 0,0:02:17.92,0:02:20.16,Default,,0,0,0,,mọi người ở tộc Tiên\Nđều sẽ gặp nguy hiểm sao?
Dialogue: 0,0:02:20.24,0:02:22.12,Default,,0,0,0,,Còn mặt mũi nào tồn tại ở tam giới nữa?
Dialogue: 0,0:02:22.88,0:02:24.40,Default,,0,0,0,,Ta phải tự tay giết bà ta.
Dialogue: 0,0:02:25.36,0:02:26.32,Default,,0,0,0,,Hoa Thù điện hạ,
Dialogue: 0,0:02:27.60,0:02:28.80,Default,,0,0,0,,Đế Quyến chân thần
Dialogue: 0,0:02:29.36,0:02:30.76,Default,,0,0,0,,hy sinh thân mình
Dialogue: 0,0:02:30.84,0:02:32.48,Default,,0,0,0,,mới đổi lại được hai giới yên bình.
Dialogue: 0,0:02:33.68,0:02:35.44,Default,,0,0,0,,Hai giới Tiên, Yêu\Nkhó chung sống hòa bình,
Dialogue: 0,0:02:35.52,0:02:36.76,Default,,0,0,0,,việc này vô cùng hệ trọng.
Dialogue: 0,0:02:39.48,0:02:40.56,Default,,0,0,0,,Bây giờ,
Dialogue: 0,0:02:40.64,0:02:42.44,Default,,0,0,0,,chúng ta buộc phải mời thiên đế
Dialogue: 0,0:02:42.52,0:02:44.24,Default,,0,0,0,,về cung tra rõ chân tướng.
Dialogue: 0,0:02:44.84,0:02:46.12,Default,,0,0,0,,Trước khi tra rõ chân tướng,
Dialogue: 0,0:02:46.88,0:02:48.28,Default,,0,0,0,,chúng ta không thể
Dialogue: 0,0:02:48.36,0:02:49.92,Default,,0,0,0,,trút giận việc này lên tộc Yêu.
Dialogue: 0,0:02:50.00,0:02:51.32,Default,,0,0,0,,Đến lúc đó hung thủ chạy mất,
Dialogue: 0,0:02:51.40,0:02:53.40,Default,,0,0,0,,ai có thể gánh được trách nhiệm?
Dialogue: 0,0:02:55.52,0:02:56.92,Default,,0,0,0,,Hoa Thù điện hạ.
Dialogue: 0,0:02:57.00,0:02:58.04,Default,,0,0,0,,Ba ngàn năm trước,
Dialogue: 0,0:02:58.12,0:03:00.68,Default,,0,0,0,,bổn quân và Hồng Nhược\Ntừng giao chiến ở La Sát Địa.
Dialogue: 0,0:03:02.04,0:03:04.08,Default,,0,0,0,,Nhưng cách tấn công linh lực\Ncủa hung thủ này
Dialogue: 0,0:03:04.16,0:03:06.76,Default,,0,0,0,,hoàn toàn khác với Hồng Nhược.
Dialogue: 0,0:03:07.44,0:03:09.44,Default,,0,0,0,,Chắc không phải Hồng Nhược đâu.
Dialogue: 0,0:03:13.16,0:03:14.04,Default,,0,0,0,,Hoa Thù điện hạ.
Dialogue: 0,0:03:15.08,0:03:16.40,Default,,0,0,0,,Kẻ đó giao chiến với đế quân,
Dialogue: 0,0:03:16.92,0:03:19.20,Default,,0,0,0,,trên người nhất định\Nđã nhiễm linh khí của đế quân.
Dialogue: 0,0:03:19.76,0:03:21.16,Default,,0,0,0,,Chỉ cần lấy một giọt máu
Dialogue: 0,0:03:21.24,0:03:22.60,Default,,0,0,0,,từ tim đế quân,
Dialogue: 0,0:03:22.68,0:03:24.68,Default,,0,0,0,,kết hợp với thuật truy tìm\Ncủa núi Vạn Nghi,
Dialogue: 0,0:03:25.20,0:03:28.16,Default,,0,0,0,,sẽ có thể lần theo dấu vết của người đó.
Dialogue: 0,0:03:28.24,0:03:29.72,Default,,0,0,0,,Việc không thể chậm trễ,
Dialogue: 0,0:03:29.80,0:03:32.92,Default,,0,0,0,,phiền sơn chủ Vạn Nghi dẫn dắt chúng ta
Dialogue: 0,0:03:33.00,0:03:34.36,Default,,0,0,0,,bắt giữ tên nghiệt súc kia.
Dialogue: 0,0:03:39.96,0:03:43.20,Default,,0,0,0,,NÚI ĐẠI TRẠCH, TIÊN GIỚI
Dialogue: 0,0:04:06.04,0:04:07.16,Default,,0,0,0,,Núi Đại Trạch?
Dialogue: 0,0:04:10.72,0:04:11.96,Default,,0,0,0,,Sao yêu hồ kia
Dialogue: 0,0:04:12.04,0:04:13.40,Default,,0,0,0,,có thể vào được núi Đại Trạch?
Dialogue: 0,0:04:18.28,0:04:19.80,Default,,0,0,0,,Núi Đại Trạch có kết giới,
Dialogue: 0,0:04:20.48,0:04:21.84,Default,,0,0,0,,vì sao yêu hồ đó
Dialogue: 0,0:04:22.48,0:04:24.64,Default,,0,0,0,,có thể dễ dàng vào núi Đại Trạch?
Dialogue: 0,0:04:29.00,0:04:30.24,Default,,0,0,0,,Các vị tiên tôn,
Dialogue: 0,0:04:30.32,0:04:32.72,Default,,0,0,0,,tuy ta không biết vì sao\Nyêu hồ có thể vào sơn môn,
Dialogue: 0,0:04:32.80,0:04:34.96,Default,,0,0,0,,nhưng núi Đại Trạch ta\Nkhông đời nào chứa chấp hung thủ.
Dialogue: 0,0:04:35.56,0:04:36.56,Default,,0,0,0,,Tiên quân đừng lo.
Dialogue: 0,0:04:37.08,0:04:38.68,Default,,0,0,0,,Núi Đại Trạch tác phong ngay thẳng.
Dialogue: 0,0:04:38.76,0:04:40.16,Default,,0,0,0,,Tiên giới không ai không biết.
Dialogue: 0,0:04:40.68,0:04:42.52,Default,,0,0,0,,Bọn ta tuyệt đối sẽ không xông vào.
Dialogue: 0,0:04:50.64,0:04:51.76,Default,,0,0,0,,Ngự Phong ở Thiên cung
Dialogue: 0,0:04:52.56,0:04:56.56,Default,,0,0,0,,dẫn các tiên quân\Nbái kiến chưởng giáo Nhàn Thiện.
Dialogue: 0,0:04:57.48,0:04:58.60,Default,,0,0,0,,Mong chưởng giáo
Dialogue: 0,0:04:59.08,0:05:00.76,Default,,0,0,0,,có thể bớt chút thì giờ ra gặp.
Dialogue: 0,0:05:07.44,0:05:08.92,Default,,0,0,0,,Xảy ra việc gì thế này?
Dialogue: 0,0:05:10.88,0:05:12.12,Default,,0,0,0,,Trông điệu bộ này
Dialogue: 0,0:05:12.92,0:05:14.32,Default,,0,0,0,,là địch chứ không phải bạn.
Dialogue: 0,0:05:15.56,0:05:18.32,Default,,0,0,0,,A Âm, cô vào nghỉ ngơi trước đi,\Nở đây giao cho ta.
Dialogue: 0,0:05:18.40,0:05:20.00,Default,,0,0,0,,Cô là công chúa tộc Ưng,
Dialogue: 0,0:05:21.12,0:05:22.12,Default,,0,0,0,,cô đi
Dialogue: 0,0:05:22.20,0:05:23.28,Default,,0,0,0,,e là không thích hợp.
Dialogue: 0,0:05:24.52,0:05:25.80,Default,,0,0,0,,Để ta đi hỏi rõ ràng.
Dialogue: 0,0:05:26.84,0:05:27.84,Default,,0,0,0,,Vậy chúng ta cùng đi.
Dialogue: 0,0:06:07.96,0:06:08.80,Default,,0,0,0,,Thành công rồi.
Dialogue: 0,0:06:09.40,0:06:11.60,Default,,0,0,0,,Chỉ cần ngâm trong nước suối\Nthêm nửa canh giờ
Dialogue: 0,0:06:12.52,0:06:13.68,Default,,0,0,0,,sẽ có thể cho A Âm uống.
Dialogue: 0,0:06:36.00,0:06:37.36,Default,,0,0,0,,A Âm, tiểu đồ đệ của Đông Hoa
Dialogue: 0,0:06:37.96,0:06:39.36,Default,,0,0,0,,tham kiến Ngự Phong tiên tôn.
Dialogue: 0,0:06:40.76,0:06:41.80,Default,,0,0,0,,Các vị chưởng giáo,
Dialogue: 0,0:06:41.88,0:06:43.28,Default,,0,0,0,,không biết có việc gì
Dialogue: 0,0:06:43.36,0:06:44.80,Default,,0,0,0,,phải gõ cửa núi Đại Trạch ta?
Dialogue: 0,0:06:45.44,0:06:46.28,Default,,0,0,0,,A Âm nữ quân,
Dialogue: 0,0:06:47.36,0:06:48.88,Default,,0,0,0,,không biết chưởng giáo Nhàn Thiện
Dialogue: 0,0:06:48.96,0:06:50.40,Default,,0,0,0,,và Nhàn Trúc tiên quân đâu?
Dialogue: 0,0:06:50.48,0:06:52.36,Default,,0,0,0,,Hai sư huynh đang bế quan
Dialogue: 0,0:06:52.44,0:06:53.40,Default,,0,0,0,,để thắp đèn Cửu Tinh.
Dialogue: 0,0:06:53.48,0:06:55.04,Default,,0,0,0,,Vậy Cổ Tấn tiên quân đâu?
Dialogue: 0,0:06:55.12,0:06:56.40,Default,,0,0,0,,Thật sự xin lỗi,
Dialogue: 0,0:06:57.32,0:06:58.84,Default,,0,0,0,,A Tấn sư huynh cũng đang bế quan.
Dialogue: 0,0:06:59.40,0:07:00.76,Default,,0,0,0,,Không biết đã xảy ra việc gì,
Dialogue: 0,0:07:01.36,0:07:02.60,Default,,0,0,0,,chi bằng nói với ta trước.
Dialogue: 0,0:07:02.68,0:07:03.92,Default,,0,0,0,,Cô có thể quyết định sao?
Dialogue: 0,0:07:06.24,0:07:07.92,Default,,0,0,0,,Nếu ta nói núi Đại Trạch cô
Dialogue: 0,0:07:08.00,0:07:10.20,Default,,0,0,0,,chứa chấp tộc Yêu, sát hại Lan Phong,
Dialogue: 0,0:07:10.28,0:07:11.64,Default,,0,0,0,,cô cũng có thể quyết định sao?
Dialogue: 0,0:07:12.20,0:07:13.44,Default,,0,0,0,,Nếu cô thật sự có thể,
Dialogue: 0,0:07:13.52,0:07:15.28,Default,,0,0,0,,thì mở cổng núi cho bổn công chúa,
Dialogue: 0,0:07:15.36,0:07:16.56,Default,,0,0,0,,để các tiên vào núi
Dialogue: 0,0:07:16.64,0:07:19.84,Default,,0,0,0,,bắt giữ con hồ ly chín đuôi\Nđã sát hại Lan Phong.
Dialogue: 0,0:07:19.92,0:07:22.08,Default,,0,0,0,,Cô đang nói gì vậy?
Dialogue: 0,0:07:22.64,0:07:25.16,Default,,0,0,0,,Sát hại Lan Phong ư?
Dialogue: 0,0:07:26.96,0:07:27.80,Default,,0,0,0,,Hoa Thù!
Dialogue: 0,0:07:32.84,0:07:33.80,Default,,0,0,0,,Các vị tiên tôn,
Dialogue: 0,0:07:34.44,0:07:36.80,Default,,0,0,0,,quả thật núi Đại Trạch ta\Ncó một con hồ ly chín đuôi.
Dialogue: 0,0:07:37.28,0:07:39.56,Default,,0,0,0,,Con trai của Hồ vương quá cố, Hồng Dịch.
Dialogue: 0,0:07:42.72,0:07:44.00,Default,,0,0,0,,Nhưng ta đảm bảo với các vị
Dialogue: 0,0:07:44.76,0:07:46.88,Default,,0,0,0,,Hồng Dịch không phải hung thủ\Nsát hại Lan Phong đế quân.
Dialogue: 0,0:07:46.96,0:07:49.16,Default,,0,0,0,,Thời gian trước ta và sư muội A Âm
Dialogue: 0,0:07:49.24,0:07:51.56,Default,,0,0,0,,đến Yêu giới\Ntìm tiên nguyên phượng hoàng lửa,
Dialogue: 0,0:07:51.64,0:07:53.36,Default,,0,0,0,,không may bị vây trong kết giới Cửu Uyên.
Dialogue: 0,0:07:53.92,0:07:55.36,Default,,0,0,0,,Chính Hồng Dịch ra tay giúp đỡ,
Dialogue: 0,0:07:55.92,0:07:57.88,Default,,0,0,0,,cũng vì thế mà hắn tổn thương nội đan,
Dialogue: 0,0:07:57.96,0:08:00.08,Default,,0,0,0,,nên bọn ta đưa về\Nnúi Đại Trạch tĩnh dưỡng.
Dialogue: 0,0:08:01.08,0:08:02.24,Default,,0,0,0,,Nay vừa khỏi nội thương.
Dialogue: 0,0:08:02.32,0:08:03.52,Default,,0,0,0,,Với yêu lực của Hồng Dịch
Dialogue: 0,0:08:03.60,0:08:06.16,Default,,0,0,0,,làm sao có thể đi ám sát\NLan Phong đế quân được?
Dialogue: 0,0:08:06.24,0:08:07.96,Default,,0,0,0,,Có lẽ hắn đã khỏi từ lâu,
Dialogue: 0,0:08:08.04,0:08:09.72,Default,,0,0,0,,ẩn nấp ở núi Đại Trạch
Dialogue: 0,0:08:09.80,0:08:11.80,Default,,0,0,0,,tìm cơ hội mưu hại tộc Tiên.
Dialogue: 0,0:08:13.04,0:08:13.88,Default,,0,0,0,,Hoa Thù,
Dialogue: 0,0:08:14.88,0:08:17.04,Default,,0,0,0,,ta biết đế quân bị hại\Nkhiến cô rất đau buồn,
Dialogue: 0,0:08:17.12,0:08:18.84,Default,,0,0,0,,nhưng thật sự không phải Hồng Dịch.
Dialogue: 0,0:08:18.92,0:08:21.60,Default,,0,0,0,,Hôm nay hắn bế quan\Ntrong điện Diên Thiên, chuẩn bị thăng cấp,
Dialogue: 0,0:08:21.68,0:08:22.72,Default,,0,0,0,,không rời đi nửa bước.
Dialogue: 0,0:08:22.80,0:08:24.32,Default,,0,0,0,,Chẳng phải ngài đang bế quan ư?
Dialogue: 0,0:08:25.08,0:08:26.48,Default,,0,0,0,,Làm sao ngài có thể chứng minh
Dialogue: 0,0:08:27.28,0:08:28.64,Default,,0,0,0,,hắn chưa từng đến Thiên cung?
Dialogue: 0,0:08:28.72,0:08:30.24,Default,,0,0,0,,Hoa Thù,
Dialogue: 0,0:08:30.32,0:08:32.88,Default,,0,0,0,,Hồng Dịch chỉ đang ở cấp hạ quân,
Dialogue: 0,0:08:32.96,0:08:35.04,Default,,0,0,0,,hoàn toàn không thể sát hại\NLan Phong đế quân.
Dialogue: 0,0:08:35.12,0:08:37.44,Default,,0,0,0,,Nhưng thông qua gương Quan Thế,\Nvà thuật truy tìm,
Dialogue: 0,0:08:37.52,0:08:38.92,Default,,0,0,0,,ta đã tận mắt thấy sự thật.
Dialogue: 0,0:08:39.00,0:08:41.96,Default,,0,0,0,,Chính con hồ ly chín đuôi đó\Ndùng Tịch Diệt Luân giết Lan Phong
Dialogue: 0,0:08:42.04,0:08:43.32,Default,,0,0,0,,rồi trốn vào núi Đại Trạch.
Dialogue: 0,0:08:43.88,0:08:47.20,Default,,0,0,0,,Thăng cấp chỉ là cái cớ mà hắn dùng\Nđể đánh lừa mọi người.
Dialogue: 0,0:08:47.76,0:08:49.72,Default,,0,0,0,,Mau mở trận pháp bảo vệ núi Đại Trạch.
Dialogue: 0,0:08:50.36,0:08:52.08,Default,,0,0,0,,Ta phải đích thân bắt hắn,
Dialogue: 0,0:08:52.16,0:08:53.40,Default,,0,0,0,,chứng minh với tất cả
Dialogue: 0,0:08:53.48,0:08:55.72,Default,,0,0,0,,hắn hoàn toàn không phải hạ quân.
Dialogue: 0,0:08:55.80,0:08:58.80,Default,,0,0,0,,Ta phải dùng máu của hắn tế Lan Phong.
Dialogue: 0,0:09:08.48,0:09:09.32,Default,,0,0,0,,Ô Già Thiên?
Dialogue: 0,0:09:09.88,0:09:10.96,Default,,0,0,0,,Hoa Thù!
Dialogue: 0,0:09:23.04,0:09:24.28,Default,,0,0,0,,Hoa Thù,
Dialogue: 0,0:09:24.36,0:09:26.20,Default,,0,0,0,,đế quân bị hại, bọn ta cũng thương tiếc,
Dialogue: 0,0:09:26.28,0:09:27.88,Default,,0,0,0,,nhưng vẫn còn nhiều đáng ngờ.
Dialogue: 0,0:09:28.44,0:09:30.44,Default,,0,0,0,,Ta có thể để các vị vào núi tìm hung thủ,
Dialogue: 0,0:09:30.52,0:09:32.84,Default,,0,0,0,,cũng có thể để các vị kiểm tra\Ntư chất yêu quân của Hồng Dịch,
Dialogue: 0,0:09:32.92,0:09:34.92,Default,,0,0,0,,nhưng không thể để các vị\Nđưa Hồng Dịch đi.
Dialogue: 0,0:09:35.60,0:09:36.96,Default,,0,0,0,,Tuy tính cách hắn ngông cuồng,
Dialogue: 0,0:09:37.04,0:09:38.44,Default,,0,0,0,,nhưng tuyệt đối không hại người.
Dialogue: 0,0:09:39.00,0:09:40.32,Default,,0,0,0,,Tuy tiên, yêu khác chủng tộc
Dialogue: 0,0:09:41.00,0:09:42.36,Default,,0,0,0,,nhưng không có thiện, ác tuyệt đối.
Dialogue: 0,0:09:42.92,0:09:44.80,Default,,0,0,0,,Nếu hôm nay ta quyết đưa hắn đi thì sao?
Dialogue: 0,0:09:44.88,0:09:46.12,Default,,0,0,0,,Cổ Tấn,
Dialogue: 0,0:09:47.24,0:09:48.48,Default,,0,0,0,,chẳng lẽ ngài định ra tay với ta?
Dialogue: 0,0:09:52.20,0:09:53.04,Default,,0,0,0,,Hoa Thù!
Dialogue: 0,0:09:54.92,0:09:56.04,Default,,0,0,0,,Lời Cổ Tấn nói đều là sự thật.
Dialogue: 0,0:09:56.12,0:09:58.16,Default,,0,0,0,,Núi Đại Trạch ta có thể\Nđảm bảo cho Hồng Dịch,
Dialogue: 0,0:09:58.24,0:10:01.20,Default,,0,0,0,,hắn tuyệt đối không phải hung thủ\Nsát hại Lan Phong đế quân ở điện Lăng Vũ.
Dialogue: 0,0:10:01.80,0:10:03.08,Default,,0,0,0,,Hoa Thù,
Dialogue: 0,0:10:03.16,0:10:05.44,Default,,0,0,0,,tạm thời không bàn đúng sai,\Nphải trái thế nào,
Dialogue: 0,0:10:05.52,0:10:08.08,Default,,0,0,0,,cô ở núi Đại Trạch ta\Ndùng ô Già Thiên xông vào núi
Dialogue: 0,0:10:08.16,0:10:09.24,Default,,0,0,0,,liệu có ổn không?
Dialogue: 0,0:10:09.32,0:10:11.48,Default,,0,0,0,,Thù Nhi, không được làm bừa.
Dialogue: 0,0:10:13.76,0:10:14.96,Default,,0,0,0,,Chưởng giáo Nhàn Thiện,
Dialogue: 0,0:10:15.04,0:10:17.28,Default,,0,0,0,,hôm nay tiểu nữ đại hôn\Nmà mất đi phu quân,
Dialogue: 0,0:10:17.36,0:10:19.32,Default,,0,0,0,,nhất thời đau buồn mới mạo phạm.
Dialogue: 0,0:10:19.40,0:10:22.20,Default,,0,0,0,,Mong chưởng giáo đừng so đo với tiểu bối.
Dialogue: 0,0:10:32.08,0:10:32.92,Default,,0,0,0,,Bỏ đi.
Dialogue: 0,0:10:33.44,0:10:35.04,Default,,0,0,0,,Đế quân độ lượng, nhân nghĩa,
Dialogue: 0,0:10:35.12,0:10:37.00,Default,,0,0,0,,mà gặp kiếp nạn này.
Dialogue: 0,0:10:37.08,0:10:38.64,Default,,0,0,0,,Mong công chúa bớt đau buồn.
Dialogue: 0,0:10:38.72,0:10:40.92,Default,,0,0,0,,Cũng đừng mắc bẫy kẻ có mưu đồ,
Dialogue: 0,0:10:41.00,0:10:42.68,Default,,0,0,0,,để Tiên, Yêu bất hòa,\Nchiến loạn lại nổ ra.
Dialogue: 0,0:10:43.24,0:10:44.64,Default,,0,0,0,,Tộc Tiên mất đi đế quân,
Dialogue: 0,0:10:44.72,0:10:45.96,Default,,0,0,0,,đương nhiên cùng tiến, cùng lùi.
Dialogue: 0,0:10:46.44,0:10:47.84,Default,,0,0,0,,Núi Đại Trạch ta cũng vậy.
Dialogue: 0,0:10:48.80,0:10:49.88,Default,,0,0,0,,Hôm nay,
Dialogue: 0,0:10:49.96,0:10:52.04,Default,,0,0,0,,các vị tiên tôn có thể vào núi tìm kiếm.
Dialogue: 0,0:10:52.12,0:10:53.96,Default,,0,0,0,,Chỉ cần tìm được gì,
Dialogue: 0,0:10:54.04,0:10:56.48,Default,,0,0,0,,núi Đại Trạch ta quyết không nhân nhượng.
Dialogue: 0,0:11:05.56,0:11:06.72,Default,,0,0,0,,Chưởng giáo,
Dialogue: 0,0:11:06.80,0:11:09.84,Default,,0,0,0,,việc này liên quan đến an nguy\Ncủa tộc Tiên và cái chết của đế quân.
Dialogue: 0,0:11:11.24,0:11:12.08,Default,,0,0,0,,Đắc tội rồi.
Dialogue: 0,0:11:16.48,0:11:17.72,Default,,0,0,0,,Điện hạ,
Dialogue: 0,0:11:17.80,0:11:19.16,Default,,0,0,0,,bọn ta vào núi điều tra.
Dialogue: 0,0:11:20.12,0:11:22.48,Default,,0,0,0,,Điện hạ ở bên ngoài chờ tin tức là được.
Dialogue: 0,0:11:57.48,0:11:58.92,Default,,0,0,0,,ĐỨC ĐỘ TẠO PHÚC
Dialogue: 0,0:12:08.08,0:12:10.48,Default,,0,0,0,,Đám tiên tôn kia đang dùng lưới tiên\Nlục soát núi Đại Trạch.
Dialogue: 0,0:12:11.12,0:12:12.64,Default,,0,0,0,,Liệu chúng có phát hiện ra không?
Dialogue: 0,0:12:12.72,0:12:14.60,Default,,0,0,0,,Lưới tiên chẳng qua là pháp khí bán thần.
Dialogue: 0,0:12:15.44,0:12:16.96,Default,,0,0,0,,Tư chất bán thần của ta
Dialogue: 0,0:12:18.08,0:12:20.84,Default,,0,0,0,,do sức mạnh ma thần thuần túy\Ncủa tôn thượng ban tặng.
Dialogue: 0,0:12:22.20,0:12:23.64,Default,,0,0,0,,Tức đủ mạnh để kiềm chế nó.
Dialogue: 0,0:12:24.20,0:12:25.96,Default,,0,0,0,,Hơn nữa hoa Thí Thần chưa nở,
Dialogue: 0,0:12:26.56,0:12:29.24,Default,,0,0,0,,ma khí ta giấu trong người Hồng Dịch\Nchưa hiện rõ.
Dialogue: 0,0:12:30.04,0:12:32.80,Default,,0,0,0,,Lưới tiên không thể tìm ra được.
Dialogue: 0,0:12:38.00,0:12:40.56,Default,,0,0,0,,Hồng Dịch đúng là tư chất hạ quân.
Dialogue: 0,0:12:41.04,0:12:43.80,Default,,0,0,0,,Núi Đại Trạch không có phát hiện gì khác.
Dialogue: 0,0:12:51.80,0:12:54.40,Default,,0,0,0,,Chưởng giáo Nhàn Thiện,\Nhôm nay Ngự Phong đã đắc tội rồi.
Dialogue: 0,0:12:55.56,0:12:57.28,Default,,0,0,0,,Mong chưởng giáo thông cảm.
Dialogue: 0,0:12:59.92,0:13:02.24,Default,,0,0,0,,Sự việc hệ trọng,\Ntiên tôn không cần phải thế.
Dialogue: 0,0:13:02.32,0:13:05.84,Default,,0,0,0,,Mong tiên tôn tiếp tục tra rõ chân tướng,\Ntìm thấy hung thủ thật sự.
Dialogue: 0,0:13:05.92,0:13:08.16,Default,,0,0,0,,Nếu thật sự có ma vật làm loạn, gây rối,
Dialogue: 0,0:13:08.24,0:13:09.88,Default,,0,0,0,,đại trận đèn Cửu Tinh của núi Đại Trạch
Dialogue: 0,0:13:09.96,0:13:11.48,Default,,0,0,0,,ắt sẽ khiến ma vật không thể trốn.
Dialogue: 0,0:13:12.08,0:13:15.20,Default,,0,0,0,,Trước mắt, phải mau chóng\Nmời thiên đế về cung chủ trì đại cục.
Dialogue: 0,0:13:15.28,0:13:16.24,Default,,0,0,0,,Chưởng giáo yên tâm.
Dialogue: 0,0:13:17.00,0:13:19.52,Default,,0,0,0,,Hai giới Tiên, Yêu\Nmặc dù tích oán sâu đậm,
Dialogue: 0,0:13:20.24,0:13:23.44,Default,,0,0,0,,nhưng việc này,\Nbọn ta không dám tùy tiện kết luận.
Dialogue: 0,0:13:24.48,0:13:26.08,Default,,0,0,0,,Việc đáng tiếc vào trăm năm trước
Dialogue: 0,0:13:26.16,0:13:27.60,Default,,0,0,0,,không thể xảy ra lần nữa.
Dialogue: 0,0:13:28.32,0:13:29.60,Default,,0,0,0,,Nếu Hồng Nhược của tộc Hồ Ly
Dialogue: 0,0:13:29.68,0:13:31.92,Default,,0,0,0,,khó thoát khỏi liên quan\Nđến cái chết của đế quân,
Dialogue: 0,0:13:32.48,0:13:35.72,Default,,0,0,0,,ta sẽ cử tiên sứ\Nbẩm rõ với Yêu hoàng, điều tra tộc Hồ Ly,
Dialogue: 0,0:13:36.56,0:13:38.04,Default,,0,0,0,,cho Tiên giới một câu trả lời.
Dialogue: 0,0:13:55.32,0:13:56.16,Default,,0,0,0,,Không sao chứ?
Dialogue: 0,0:13:59.92,0:14:01.00,Default,,0,0,0,,A Tấn,
Dialogue: 0,0:14:01.08,0:14:03.80,Default,,0,0,0,,ban nãy đệ có chừng mực, đã làm rất tốt.
Dialogue: 0,0:14:03.88,0:14:06.64,Default,,0,0,0,,Trước khi sư tôn phi thăng\Nđã luôn lo lắng về đệ,
Dialogue: 0,0:14:06.72,0:14:09.84,Default,,0,0,0,,luôn cảm thấy đệ nhập môn chưa lâu,\Ntuổi lại còn nhỏ,
Dialogue: 0,0:14:09.92,0:14:11.36,Default,,0,0,0,,không có thời gian dạy bảo đệ.
Dialogue: 0,0:14:12.00,0:14:14.80,Default,,0,0,0,,Nhưng bây giờ,\Nngười cũng có thể yên tâm được rồi.
Dialogue: 0,0:14:15.36,0:14:17.72,Default,,0,0,0,,Đệ trưởng thành còn tốt hơn sư huynh nghĩ.
Dialogue: 0,0:14:18.56,0:14:19.40,Default,,0,0,0,,Đa tạ sư huynh.
Dialogue: 0,0:14:20.44,0:14:21.48,Default,,0,0,0,,A Âm cũng làm rất tốt.
Dialogue: 0,0:14:22.12,0:14:24.60,Default,,0,0,0,,Nhưng quan trọng nhất bây giờ\Nlà chăm sóc tốt bản thân.
Dialogue: 0,0:14:25.20,0:14:26.24,Default,,0,0,0,,Đừng làm mình mệt mỏi.
Dialogue: 0,0:14:28.40,0:14:30.64,Default,,0,0,0,,Ngày mai, sẽ thắp đèn Cửu Tinh.
Dialogue: 0,0:14:31.16,0:14:32.32,Default,,0,0,0,,Ta và nhị sư huynh của đệ
Dialogue: 0,0:14:32.80,0:14:34.92,Default,,0,0,0,,sẽ khóa chặt ngũ thức,\Ntập trung chăm sóc đèn thần.
Dialogue: 0,0:14:37.96,0:14:38.92,Default,,0,0,0,,Núi Đại Trạch này
Dialogue: 0,0:14:39.56,0:14:40.84,Default,,0,0,0,,giao lại cho đệ.
Dialogue: 0,0:14:45.84,0:14:47.04,Default,,0,0,0,,Cầm lấy đi.
Dialogue: 0,0:14:50.56,0:14:52.96,Default,,0,0,0,,LỆNH
Dialogue: 0,0:14:57.00,0:14:57.96,Default,,0,0,0,,A Tấn,
Dialogue: 0,0:14:59.28,0:15:02.20,Default,,0,0,0,,dù gặp phải bất cứ việc gì,\Nhay phải đưa ra quyết định gì,
Dialogue: 0,0:15:02.28,0:15:03.88,Default,,0,0,0,,núi Đại Trạch sẽ luôn luôn ủng hộ đệ.
Dialogue: 0,0:15:04.56,0:15:07.24,Default,,0,0,0,,Đệ cứ yên tâm làm bất cứ việc gì đệ muốn.
Dialogue: 0,0:15:08.84,0:15:09.80,Default,,0,0,0,,Đa tạ sư huynh.
Dialogue: 0,0:15:14.84,0:15:15.68,Default,,0,0,0,,Nhìn kìa.
Dialogue: 0,0:15:18.12,0:15:19.92,Default,,0,0,0,,Xem ra A Cửu sắp làm thượng quân rồi.
Dialogue: 0,0:15:21.04,0:15:23.36,Default,,0,0,0,,Ta buộc phải về điện Diên Thiên\Ncùng sư huynh của đệ thắp đèn Cửu Tinh.
Dialogue: 0,0:15:23.44,0:15:26.52,Default,,0,0,0,,Nhớ kỹ, không được để thiên lôi\Nđánh vào điện Diên Thiên,
Dialogue: 0,0:15:26.60,0:15:28.20,Default,,0,0,0,,nếu không tất cả sẽ thành công cốc.
Dialogue: 0,0:15:28.28,0:15:29.28,Default,,0,0,0,,Ta hiểu rồi.
Dialogue: 0,0:15:43.04,0:15:44.12,Default,,0,0,0,,Vẫn ổn chứ?
Dialogue: 0,0:15:45.80,0:15:46.88,Default,,0,0,0,,Sao lại lạnh thế này?
Dialogue: 0,0:15:47.60,0:15:48.44,Default,,0,0,0,,Muội thấy thế nào?
Dialogue: 0,0:15:49.00,0:15:50.00,Default,,0,0,0,,A Âm.
Dialogue: 0,0:15:50.08,0:15:51.68,Default,,0,0,0,,A Âm!
Dialogue: 0,0:15:51.76,0:15:52.88,Default,,0,0,0,,- Tiểu sư cô.\N- A Âm.
Dialogue: 0,0:15:52.96,0:15:54.20,Default,,0,0,0,,Tiểu sư cô!
Dialogue: 0,0:16:18.00,0:16:19.44,Default,,0,0,0,,Sao đan Hóa Thần lại vỡ?
Dialogue: 0,0:16:22.00,0:16:23.20,Default,,0,0,0,,Tiên khí cạn kiệt
Dialogue: 0,0:16:23.84,0:16:24.88,Default,,0,0,0,,là dấu hiệu sắp chết.
Dialogue: 0,0:16:25.56,0:16:26.44,Default,,0,0,0,,Sao lại thế này?
Dialogue: 0,0:16:28.88,0:16:29.92,Default,,0,0,0,,Sao lại thế này?
Dialogue: 0,0:16:31.16,0:16:32.40,Default,,0,0,0,,Chỉ cần tìm đủ ba thứ này
Dialogue: 0,0:16:33.76,0:16:35.36,Default,,0,0,0,,sẽ có thể luyện ra đan Hóa Thần,
Dialogue: 0,0:16:37.40,0:16:38.44,Default,,0,0,0,,giúp A Âm kéo dài tuổi thọ.
Dialogue: 0,0:16:39.00,0:16:40.32,Default,,0,0,0,,Bích Ba đã lừa ta.
Dialogue: 0,0:16:42.04,0:16:44.12,Default,,0,0,0,,Chắc chắn còn thiếu gì đó\Nđể luyện đan thần.
Dialogue: 0,0:16:44.92,0:16:46.36,Default,,0,0,0,,Ta phải đến núi Tử Nguyệt.
Dialogue: 0,0:16:54.76,0:16:56.04,Default,,0,0,0,,Ta sẽ dẫn đám Thanh Y
Dialogue: 0,0:16:56.56,0:16:58.92,Default,,0,0,0,,giúp A Cửu vượt qua lôi kiếp,\Nbảo vệ đèn Cửu Tinh.
Dialogue: 0,0:16:59.76,0:17:01.68,Default,,0,0,0,,Thiên lôi còn một canh giờ\Nmới giáng xuống.
Dialogue: 0,0:17:02.64,0:17:03.60,Default,,0,0,0,,Bọn ta đỡ được.
Dialogue: 0,0:17:03.68,0:17:05.12,Default,,0,0,0,,Huynh mau đi cứu A Âm đi.
Dialogue: 0,0:17:06.00,0:17:07.08,Default,,0,0,0,,Được.
Dialogue: 0,0:17:12.68,0:17:13.96,Default,,0,0,0,,Ở đây nhờ mọi người.
Dialogue: 0,0:17:14.04,0:17:15.20,Default,,0,0,0,,Yên tâm.
Dialogue: 0,0:17:21.16,0:17:22.64,Default,,0,0,0,,MÂY NHẸ NHÀNG TRÔI
Dialogue: 0,0:17:22.72,0:17:23.56,Default,,0,0,0,,Phụ vương,
Dialogue: 0,0:17:24.16,0:17:25.92,Default,,0,0,0,,cuộc trao đổi trước đây\Ngiữa người và Hồng Nhược
Dialogue: 0,0:17:26.00,0:17:27.52,Default,,0,0,0,,có dính dáng đến Lan Phong không?
Dialogue: 0,0:17:28.52,0:17:31.28,Default,,0,0,0,,Trong đại hội Linh Hào,\NHồng Nhược đã định cấu kết với ma
Dialogue: 0,0:17:31.36,0:17:32.80,Default,,0,0,0,,làm đảo lộn Thiên cung.
Dialogue: 0,0:17:32.88,0:17:34.76,Default,,0,0,0,,Có phải Lan Phong đã phát hiện ra điều gì
Dialogue: 0,0:17:34.84,0:17:36.28,Default,,0,0,0,,nên phải giết huynh ấy diệt khẩu không?
Dialogue: 0,0:17:37.72,0:17:38.80,Default,,0,0,0,,Phụ vương, cho con biết đi.
Dialogue: 0,0:17:38.88,0:17:40.76,Default,,0,0,0,,Có phải Lan Phong\Nbị Hồng Nhược sát hại không?
Dialogue: 0,0:17:43.24,0:17:44.20,Default,,0,0,0,,Con nói gì thế?
Dialogue: 0,0:17:44.96,0:17:46.64,Default,,0,0,0,,Hồng Nhược thân thiết\Nvới thiên đế Phượng Uyên.
Dialogue: 0,0:17:46.72,0:17:48.96,Default,,0,0,0,,Sao ta ngờ được ả cấu kết với ma chứ?
Dialogue: 0,0:17:49.60,0:17:51.40,Default,,0,0,0,,Bây giờ ta cũng vô cùng hối hận.
Dialogue: 0,0:17:52.08,0:17:53.40,Default,,0,0,0,,Hơn nữa,
Dialogue: 0,0:17:53.48,0:17:55.56,Default,,0,0,0,,Hồng Nhược cũng chỉ muốn\Nlấy lại Tịch Diệt Luân.
Dialogue: 0,0:17:55.64,0:17:57.60,Default,,0,0,0,,Sao có thể dính dáng đến Lan Phong được.
Dialogue: 0,0:17:57.68,0:18:00.08,Default,,0,0,0,,Tịch Diệt Luân và vết tích chín đuôi\Nphải giải thích thế nào?
Dialogue: 0,0:18:00.16,0:18:02.76,Default,,0,0,0,,Nếu như Hồng Dịch\Nthật sự chưa từng rời núi Đại Trạch
Dialogue: 0,0:18:02.84,0:18:05.56,Default,,0,0,0,,thì trong tam giới này\Ncòn con hồ ly chín đuôi nào
Dialogue: 0,0:18:05.64,0:18:07.64,Default,,0,0,0,,có thể dùng Tịch Diệt Luân giết Lan Phong?
Dialogue: 0,0:18:07.72,0:18:10.12,Default,,0,0,0,,Con đừng tin\Nlời một phía của núi Đại Trạch.
Dialogue: 0,0:18:10.68,0:18:12.48,Default,,0,0,0,,Con phải tin\Nbằng chứng của gương Quan Thế.
Dialogue: 0,0:18:13.20,0:18:16.16,Default,,0,0,0,,Bây giờ Thiên cung\Nđã đến tộc Yêu điều tra,
Dialogue: 0,0:18:16.72,0:18:19.48,Default,,0,0,0,,Hồng Nhược có hiềm nghi không\Nlập tức sẽ biết ngay.
Dialogue: 0,0:18:19.56,0:18:20.76,Default,,0,0,0,,Mà con cũng biết
Dialogue: 0,0:18:21.52,0:18:23.32,Default,,0,0,0,,núi Đại Trạch và gương Quan Thế,
Dialogue: 0,0:18:23.40,0:18:24.72,Default,,0,0,0,,bằng chứng của bên nào
Dialogue: 0,0:18:25.48,0:18:26.76,Default,,0,0,0,,mới là chân tướng.
Dialogue: 0,0:18:33.12,0:18:35.44,Default,,0,0,0,,ĐỘNG VÔ CỰC, ĐẢO BÁCH ĐIỂU
Dialogue: 0,0:18:41.40,0:18:43.00,Default,,0,0,0,,Đã bảo là dạo này đừng gặp mà?
Dialogue: 0,0:18:43.64,0:18:44.92,Default,,0,0,0,,Giờ ông đến đây làm gì?
Dialogue: 0,0:18:48.28,0:18:50.56,Default,,0,0,0,,Lần này ta dùng chân thân yêu hồ\Ngiết Lan Phong,
Dialogue: 0,0:18:51.68,0:18:53.32,Default,,0,0,0,,nếu ta bị tộc Tiên phát hiện,
Dialogue: 0,0:18:54.40,0:18:56.04,Default,,0,0,0,,sợ sẽ bị lưới tiên đối phó.
Dialogue: 0,0:18:57.64,0:18:59.68,Default,,0,0,0,,Có lẽ sẽ hơi khó khăn để ta ứng phó.
Dialogue: 0,0:19:01.24,0:19:03.12,Default,,0,0,0,,Cô bảo đã sắp xếp mọi chuyện rồi mà?
Dialogue: 0,0:19:04.04,0:19:05.28,Default,,0,0,0,,Hồng Dịch chỉ là hạ quân,
Dialogue: 0,0:19:05.36,0:19:06.68,Default,,0,0,0,,làm sao giết được Lan Phong?
Dialogue: 0,0:19:07.24,0:19:08.80,Default,,0,0,0,,Cô tưởng người tộc Tiên đều ngu à?
Dialogue: 0,0:19:11.84,0:19:12.92,Default,,0,0,0,,Ông yên tâm,
Dialogue: 0,0:19:14.00,0:19:15.52,Default,,0,0,0,,ta tự có sắp xếp.
Dialogue: 0,0:19:15.60,0:19:18.16,Default,,0,0,0,,Giờ núi Đại Trạch đã giúp Hồng Dịch\Nthoát khỏi hiềm nghi.
Dialogue: 0,0:19:18.76,0:19:21.64,Default,,0,0,0,,Chờ thiên đế Phượng Uyên quay về,\Nvới quan hệ giữa bà ta và Hồng Nhược,
Dialogue: 0,0:19:21.72,0:19:23.64,Default,,0,0,0,,nhất định sẽ đích thân đến tộc Hồ Ly\Nđiều tra chân tướng.
Dialogue: 0,0:19:24.44,0:19:26.00,Default,,0,0,0,,Đến lúc đó ta muốn xem thử
Dialogue: 0,0:19:26.56,0:19:27.84,Default,,0,0,0,,thân phận của cô
Dialogue: 0,0:19:28.88,0:19:30.56,Default,,0,0,0,,còn có thể che giấu được bao lâu.
Dialogue: 0,0:19:56.52,0:19:59.16,Default,,0,0,0,,Hoa Mặc đã thành công\Ntrồng được hoa Thí Thần,
Dialogue: 0,0:20:00.36,0:20:02.32,Default,,0,0,0,,đồng thời dùng pháp thuật che giấu.
Dialogue: 0,0:20:04.60,0:20:07.00,Default,,0,0,0,,Chờ hoa Thí Thần sinh trưởng\Nvà phá hủy tiên mạch,
Dialogue: 0,0:20:08.36,0:20:09.96,Default,,0,0,0,,chúng ta sẽ giết Cổ Tấn,
Dialogue: 0,0:20:10.60,0:20:11.80,Default,,0,0,0,,cướp ngọc Hỏa Hoàng,
Dialogue: 0,0:20:12.36,0:20:14.40,Default,,0,0,0,,mở kết giới phong ấn Cửu Uyên.
Dialogue: 0,0:20:14.48,0:20:15.72,Default,,0,0,0,,Đến lúc đó,
Dialogue: 0,0:20:16.68,0:20:18.92,Default,,0,0,0,,ma thần Minh Khởi sẽ tái xuất.
Dialogue: 0,0:20:20.20,0:20:22.00,Default,,0,0,0,,Ma nhẫn nhịn vạn năm
Dialogue: 0,0:20:22.72,0:20:24.36,Default,,0,0,0,,nhất định có thể khiến tam giới
Dialogue: 0,0:20:24.92,0:20:26.52,Default,,0,0,0,,long trời lở đất.
Dialogue: 0,0:20:28.20,0:20:30.28,Default,,0,0,0,,YÊU GIỚI
Dialogue: 0,0:20:42.32,0:20:43.16,Default,,0,0,0,,Tiểu thần quân?
Dialogue: 0,0:20:45.44,0:20:46.60,Default,,0,0,0,,Sao ngươi thấy tiểu thần quân lại chạy?
Dialogue: 0,0:20:47.16,0:20:48.48,Default,,0,0,0,,Không thể để A Tấn thấy ta.
Dialogue: 0,0:20:48.56,0:20:49.40,Default,,0,0,0,,Chờ đã.
Dialogue: 0,0:20:51.48,0:20:53.52,Default,,0,0,0,,Ngươi còn chuyện giấu cậu ấy phải không?
Dialogue: 0,0:20:53.60,0:20:54.56,Default,,0,0,0,,Không có chuyện gì.
Dialogue: 0,0:20:54.64,0:20:55.60,Default,,0,0,0,,Đừng ngăn cản ta.
Dialogue: 0,0:20:55.68,0:20:57.04,Default,,0,0,0,,- Rốt cuộc là chuyện gì? Nói đi.\N- Buông ra đi.
Dialogue: 0,0:20:57.96,0:20:58.84,Default,,0,0,0,,Không đi được nữa rồi.
Dialogue: 0,0:21:05.96,0:21:06.88,Default,,0,0,0,,Đan Hóa Thần.
Dialogue: 0,0:21:08.80,0:21:11.20,Default,,0,0,0,,Đây chính là\Nđan Hóa Thần ngươi nói sao, Bích Ba?
Dialogue: 0,0:21:13.80,0:21:16.08,Default,,0,0,0,,- A Tấn…\N- Cần cái gì để luyện được đan Hóa Thần?
Dialogue: 0,0:21:16.76,0:21:17.72,Default,,0,0,0,,Nói ta biết!
Dialogue: 0,0:21:19.28,0:21:20.12,Default,,0,0,0,,Ta…
Dialogue: 0,0:21:21.48,0:21:22.64,Default,,0,0,0,,Bích Ba,
Dialogue: 0,0:21:22.72,0:21:24.80,Default,,0,0,0,,ta biết ngươi nhất định\Ncó lý do không nói ra.
Dialogue: 0,0:21:24.88,0:21:26.32,Default,,0,0,0,,Nhưng việc này liên quan đến\Ntính mạng A Âm.
Dialogue: 0,0:21:26.88,0:21:28.00,Default,,0,0,0,,Dù chân tướng thế nào,
Dialogue: 0,0:21:28.08,0:21:30.52,Default,,0,0,0,,chuyện gì sẽ xảy ra, sẽ mất đi cái gì,
Dialogue: 0,0:21:30.60,0:21:33.00,Default,,0,0,0,,người đều phải nói với tiểu thần quân,\Nđể cậu ấy tự quyết định.
Dialogue: 0,0:21:34.08,0:21:35.08,Default,,0,0,0,,Cậu ấy đã trưởng thành,
Dialogue: 0,0:21:35.16,0:21:37.44,Default,,0,0,0,,để có thể chịu trách nhiệm\Nvới cuộc đời của mình.
Dialogue: 0,0:21:38.84,0:21:39.88,Default,,0,0,0,,Bích Ba.
Dialogue: 0,0:21:41.68,0:21:42.92,Default,,0,0,0,,A Âm rất quan trọng với ta.
Dialogue: 0,0:21:43.60,0:21:44.56,Default,,0,0,0,,Như phụ thần,
Dialogue: 0,0:21:45.08,0:21:46.12,Default,,0,0,0,,mẫu thần,
Dialogue: 0,0:21:47.04,0:21:48.04,Default,,0,0,0,,Phượng Uyên cô cô,
Dialogue: 0,0:21:49.72,0:21:50.56,Default,,0,0,0,,và ngươi nữa,
Dialogue: 0,0:21:52.88,0:21:53.72,Default,,0,0,0,,đều quan trọng với ta.
Dialogue: 0,0:21:57.32,0:21:58.36,Default,,0,0,0,,Hãy giúp ta cứu cô ấy.
Dialogue: 0,0:22:00.08,0:22:00.92,Default,,0,0,0,,A Tấn,
Dialogue: 0,0:22:01.56,0:22:02.44,Default,,0,0,0,,ta tưởng ngươi
Dialogue: 0,0:22:02.52,0:22:05.20,Default,,0,0,0,,không tìm được nội đan\Ncủa thú bay vạn năm thì sẽ bỏ cuộc.
Dialogue: 0,0:22:05.28,0:22:07.04,Default,,0,0,0,,Không ngờ ngươi lại\Nluyện đan Hóa Thần thật.
Dialogue: 0,0:22:10.20,0:22:11.04,Default,,0,0,0,,Ta không lừa ngươi.
Dialogue: 0,0:22:11.72,0:22:13.24,Default,,0,0,0,,Trong tộc ta thật sự có đan Hóa Thần.
Dialogue: 0,0:22:13.80,0:22:15.24,Default,,0,0,0,,Nhưng không luyện thành công
Dialogue: 0,0:22:15.80,0:22:17.56,Default,,0,0,0,,là vì chưa có ai\Ntìm được vị thuốc dẫn cuối cùng.
Dialogue: 0,0:22:17.64,0:22:19.00,Default,,0,0,0,,Đó là gì?
Dialogue: 0,0:22:20.12,0:22:20.96,Default,,0,0,0,,Ma tủy Cửu Uyên.
Dialogue: 0,0:22:23.68,0:22:26.36,Default,,0,0,0,,Chỉ khi lấy được ma tủy Cửu Uyên\Ntrong nhụy hoa của hoa Thí Thần vua
Dialogue: 0,0:22:27.00,0:22:29.76,Default,,0,0,0,,mới luyện được đan Hóa Thần thật sự.
Dialogue: 0,0:22:31.32,0:22:34.36,Default,,0,0,0,,Nhưng A Tấn à,\Ngiờ ngươi chưa thức tỉnh thần lực,
Dialogue: 0,0:22:34.44,0:22:36.04,Default,,0,0,0,,đến ma vật bình thường nhất\Ncũng có thể đánh bại ngươi.
Dialogue: 0,0:22:36.60,0:22:37.84,Default,,0,0,0,,Ta sợ ngươi cũng sẽ chết trong đó.
Dialogue: 0,0:22:38.72,0:22:39.68,Default,,0,0,0,,Long Quân.
Dialogue: 0,0:22:41.68,0:22:43.24,Default,,0,0,0,,Giúp ta mở Cửu Uyên Sát Ngục.
Dialogue: 0,0:22:49.32,0:22:50.16,Default,,0,0,0,,Được.
Dialogue: 0,0:22:52.72,0:22:53.56,Default,,0,0,0,,A Tấn,
Dialogue: 0,0:22:54.04,0:22:54.88,Default,,0,0,0,,ngươi đừng đi.
Dialogue: 0,0:22:54.96,0:22:55.80,Default,,0,0,0,,Sẽ chẳng kịp đâu.
Dialogue: 0,0:22:56.36,0:22:57.84,Default,,0,0,0,,Dù bây giờ lấy được ma tủy Cửu Uyên
Dialogue: 0,0:22:58.68,0:23:01.04,Default,,0,0,0,,thì cũng chẳng có thời gian\Nluyện đan Hóa Thần.
Dialogue: 0,0:23:01.96,0:23:03.16,Default,,0,0,0,,Huống chi, với tiên lực bây giờ của ngươi,
Dialogue: 0,0:23:03.76,0:23:06.16,Default,,0,0,0,,sao có thể đánh bại hoa Thí Thần vua\Nvà bấy nhiêu ma vật chứ.
Dialogue: 0,0:23:10.20,0:23:11.08,Default,,0,0,0,,Bích Ba,
Dialogue: 0,0:23:11.68,0:23:12.68,Default,,0,0,0,,dù có khó hơn nữa
Dialogue: 0,0:23:13.84,0:23:14.96,Default,,0,0,0,,ta cũng sẽ đi.
Dialogue: 0,0:23:15.52,0:23:17.88,Default,,0,0,0,,Nếu bảo ta tận mắt chứng kiến\Nngười ta yêu nhất ra đi
Dialogue: 0,0:23:18.76,0:23:19.80,Default,,0,0,0,,thì quá khó.
Dialogue: 0,0:23:32.40,0:23:34.60,Default,,0,0,0,,Vì ta mà cô ấy mới thành ra như bây giờ.
Dialogue: 0,0:23:37.32,0:23:38.24,Default,,0,0,0,,Nếu cô ấy đi rồi,
Dialogue: 0,0:23:41.68,0:23:42.60,Default,,0,0,0,,ta sẽ không trụ được mất.
Dialogue: 0,0:23:54.20,0:23:55.32,Default,,0,0,0,,Cái này,
Dialogue: 0,0:23:55.84,0:23:56.68,Default,,0,0,0,,cất đi giúp ta.
Dialogue: 0,0:24:09.44,0:24:11.72,Default,,0,0,0,,Long Quân, chờ ta một lát.
Dialogue: 0,0:24:12.60,0:24:13.56,Default,,0,0,0,,Được.
Dialogue: 0,0:24:24.04,0:24:25.28,Default,,0,0,0,,A Âm,
Dialogue: 0,0:24:25.36,0:24:26.20,Default,,0,0,0,,chờ ta nhé.
Dialogue: 0,0:24:28.04,0:24:29.16,Default,,0,0,0,,Ta sẽ về ngay thôi.
Dialogue: 0,0:24:51.80,0:24:53.36,Default,,0,0,0,,CỬU UYÊN SÁT NGỤC
Dialogue: 0,0:25:13.96,0:25:16.76,Default,,0,0,0,,NÚI ĐẠI TRẠCH, TIÊN GIỚI
Dialogue: 0,0:25:40.28,0:25:42.28,Default,,0,0,0,,Không ổn, suýt thì trượt rồi.
Dialogue: 0,0:25:43.08,0:25:45.48,Default,,0,0,0,,Khả năng sẽ có tia sét nào đó\Nđánh trúng đèn Cửu Tinh.
Dialogue: 0,0:26:38.12,0:26:38.96,Default,,0,0,0,,Kẻ nào?
Dialogue: 0,0:26:39.48,0:26:40.80,Default,,0,0,0,,Ra đây!
Dialogue: 0,0:26:40.88,0:26:42.24,Default,,0,0,0,,Tiểu hồ ly,
Dialogue: 0,0:26:42.32,0:26:44.12,Default,,0,0,0,,ngươi không nhìn thấy ta đâu.
Dialogue: 0,0:26:44.92,0:26:45.88,Default,,0,0,0,,Ta chính là ngươi.
Dialogue: 0,0:26:45.96,0:26:47.32,Default,,0,0,0,,Toàn trò lừa người.
Dialogue: 0,0:26:51.04,0:26:51.88,Default,,0,0,0,,Ra đây.
Dialogue: 0,0:26:58.32,0:27:00.52,Default,,0,0,0,,ĐỨC ĐỘ TẠO PHÚC
Dialogue: 0,0:27:20.32,0:27:22.48,Default,,0,0,0,,Uy lực của tia sét cuối cùng\Nmới là mạnh nhất.
Dialogue: 0,0:27:23.36,0:27:24.80,Default,,0,0,0,,Nhất định phải chống chọi được.
Dialogue: 0,0:27:38.84,0:27:40.40,Default,,0,0,0,,- Sao rồi?\N- Nào.
Dialogue: 0,0:27:40.48,0:27:41.36,Default,,0,0,0,,Không sao chứ?
Dialogue: 0,0:27:45.60,0:27:47.32,Default,,0,0,0,,Cuối cùng cũng không phụ\Nlời nhờ cậy của Cổ Tấn.
Dialogue: 0,0:27:48.44,0:27:49.36,Default,,0,0,0,,Kết thúc rồi.
Dialogue: 0,0:27:58.04,0:27:59.20,Default,,0,0,0,,Sao vẫn còn lôi kiếp?
Dialogue: 0,0:28:01.00,0:28:01.84,Default,,0,0,0,,Ánh sáng vàng ấy…
Dialogue: 0,0:28:03.08,0:28:04.88,Default,,0,0,0,,Chẳng lẽ A Cửu sắp thăng cấp bán thần?
Dialogue: 0,0:28:15.88,0:28:17.64,Default,,0,0,0,,A Cửu, ngươi mau quay về.
Dialogue: 0,0:28:25.72,0:28:26.88,Default,,0,0,0,,A Cửu.
Dialogue: 0,0:28:27.44,0:28:28.28,Default,,0,0,0,,A Cửu, ngươi làm gì vậy?
Dialogue: 0,0:28:40.36,0:28:41.72,Default,,0,0,0,,Ngươi không phải A Cửu.
Dialogue: 0,0:28:43.92,0:28:45.04,Default,,0,0,0,,Rốt cuộc ngươi là ai?
Dialogue: 0,0:28:57.44,0:28:58.44,Default,,0,0,0,,ĐIỆN DIÊN THIÊN
Dialogue: 0,0:29:51.32,0:29:52.32,Default,,0,0,0,,Tiên nguyên đã cạn,
Dialogue: 0,0:29:53.40,0:29:54.40,Default,,0,0,0,,điềm báo tử vong.
Dialogue: 0,0:29:56.92,0:29:58.40,Default,,0,0,0,,Sư tôn!
Dialogue: 0,0:29:58.48,0:30:01.48,Default,,0,0,0,,- Sư tôn!\N- Sư tôn!
Dialogue: 0,0:30:20.72,0:30:21.56,Default,,0,0,0,,Sư tôn!
Dialogue: 0,0:30:22.20,0:30:24.36,Default,,0,0,0,,Sư tôn, tỉnh lại đi!
Dialogue: 0,0:30:25.64,0:30:27.52,Default,,0,0,0,,Sư tôn!
Dialogue: 0,0:31:20.48,0:31:21.52,Default,,0,0,0,,Hỏng rồi,
Dialogue: 0,0:31:21.60,0:31:23.12,Default,,0,0,0,,không phải hắn thăng cấp thượng quân
Dialogue: 0,0:31:23.20,0:31:24.56,Default,,0,0,0,,mà sắp hóa thần.
Dialogue: 0,0:31:25.08,0:31:26.68,Default,,0,0,0,,Tất cả đều bị hắn lừa rồi.
Dialogue: 0,0:31:28.12,0:31:28.96,Default,,0,0,0,,Núi Đại Trạch đang gặp nguy hiểm.
Dialogue: 0,0:31:30.64,0:31:32.80,Default,,0,0,0,,Triệu tập các tiên quân\Nvà tới núi Đại Trạch.
Dialogue: 0,0:31:52.08,0:31:54.44,Default,,0,0,0,,Không hổ là chưởng giáo núi Đại Trạch.
Dialogue: 0,0:31:55.16,0:31:58.56,Default,,0,0,0,,Vậy mà có thể\Nthoát khỏi lôi kiếp của bán thần.
Dialogue: 0,0:31:58.64,0:31:59.88,Default,,0,0,0,,Là ma vật phương nào hả?
Dialogue: 0,0:31:59.96,0:32:01.36,Default,,0,0,0,,Sao dám xâm phạm núi Đại Trạch ta?
Dialogue: 0,0:32:01.92,0:32:03.80,Default,,0,0,0,,Núi Đại Trạch thì sao nào?
Dialogue: 0,0:32:04.56,0:32:05.80,Default,,0,0,0,,Ta muốn giết,
Dialogue: 0,0:32:06.48,0:32:07.80,Default,,0,0,0,,thì cứ giết sạch thôi.
Dialogue: 0,0:32:34.36,0:32:35.56,Default,,0,0,0,,A Cửu,
Dialogue: 0,0:32:36.36,0:32:38.08,Default,,0,0,0,,ta không tin ngươi sẽ làm như vậy.
Dialogue: 0,0:32:43.76,0:32:45.48,Default,,0,0,0,,Đừng phạm phải sai lầm to lớn.
Dialogue: 0,0:33:20.00,0:33:21.16,Default,,0,0,0,,Đừng làm vậy.
Dialogue: 0,0:33:32.16,0:33:33.04,Default,,0,0,0,,A Cửu!
Dialogue: 0,0:34:15.88,0:34:16.88,Default,,0,0,0,,Lập trận!
Dialogue: 0,0:34:47.16,0:34:48.40,Default,,0,0,0,,Thật tiếc cho
Dialogue: 0,0:34:48.48,0:34:51.64,Default,,0,0,0,,môn phái tiên sơn vạn năm\Nđã sinh ra biết bao người tài.
Dialogue: 0,0:34:52.80,0:34:54.48,Default,,0,0,0,,Tiên mạch núi Đại Trạch đã bị hủy.
Dialogue: 0,0:34:55.04,0:34:57.76,Default,,0,0,0,,Đã không còn cấm chế có thể ngăn chủ nhân
Dialogue: 0,0:34:58.28,0:34:59.52,Default,,0,0,0,,cướp lấy ngọc Hỏa Hoàng nữa.
Dialogue: 0,0:35:03.76,0:35:04.96,Default,,0,0,0,,Nhàn Trúc,
Dialogue: 0,0:35:05.64,0:35:06.72,Default,,0,0,0,,hôm nay hai chúng ta
Dialogue: 0,0:35:07.64,0:35:09.24,Default,,0,0,0,,phải yểm hộ cho núi Đại Trạch thôi.
Dialogue: 0,0:35:09.80,0:35:10.76,Default,,0,0,0,,Được.
Dialogue: 0,0:35:19.72,0:35:20.80,Default,,0,0,0,,Thanh Vân,
Dialogue: 0,0:35:20.88,0:35:22.16,Default,,0,0,0,,mau đưa các đệ tử rút khỏi kết giới.
Dialogue: 0,0:35:22.24,0:35:23.44,Default,,0,0,0,,Sư tôn,
Dialogue: 0,0:35:23.92,0:35:24.76,Default,,0,0,0,,đệ tử không đi.
Dialogue: 0,0:35:25.56,0:35:26.60,Default,,0,0,0,,- Đệ tử không đi!\N- Đệ tử không đi!
Dialogue: 0,0:35:26.68,0:35:27.80,Default,,0,0,0,,- Đi đi!\N- Đi đi!
Dialogue: 0,0:35:29.32,0:35:30.60,Default,,0,0,0,,Núi Đại Trạch còn,
Dialogue: 0,0:35:31.16,0:35:32.32,Default,,0,0,0,,thì đệ tử còn.
Dialogue: 0,0:35:32.84,0:35:37.12,Default,,0,0,0,,Chúng đệ tử thề chết bảo vệ núi Đại Trạch.
Dialogue: 0,0:35:37.20,0:35:41.48,Default,,0,0,0,,- Đệ tử thề chết bảo vệ núi Đại Trạch.\N- Đệ tử thề chết bảo vệ núi Đại Trạch.
Dialogue: 0,0:35:48.12,0:35:49.08,Default,,0,0,0,,Yến Sảng điện hạ,
Dialogue: 0,0:35:50.04,0:35:51.60,Default,,0,0,0,,đây là kiếp nạn của núi Đại Trạch,
Dialogue: 0,0:35:52.32,0:35:53.88,Default,,0,0,0,,không liên quan đến điện hạ.
Dialogue: 0,0:35:53.96,0:35:55.28,Default,,0,0,0,,Xin điện hạ mau rời khỏi đây.
Dialogue: 0,0:35:56.52,0:35:57.88,Default,,0,0,0,,Không được, ta không thể đi.
Dialogue: 0,0:35:57.96,0:35:59.92,Default,,0,0,0,,Hôm nay buộc phải có người\Nsống sót thoát ra,
Dialogue: 0,0:36:00.68,0:36:03.32,Default,,0,0,0,,báo với tam giới chuyện tộc Ma đã trở lại,
Dialogue: 0,0:36:03.40,0:36:04.60,Default,,0,0,0,,để còn đề phòng sớm.
Dialogue: 0,0:36:05.32,0:36:06.44,Default,,0,0,0,,Chưởng giáo.
Dialogue: 0,0:36:14.16,0:36:15.12,Default,,0,0,0,,Yến Sảng điện hạ,
Dialogue: 0,0:36:16.32,0:36:18.28,Default,,0,0,0,,tại hạ còn chuyện muốn nhờ.
Dialogue: 0,0:36:19.08,0:36:21.68,Default,,0,0,0,,Xin hãy đưa đệ tử nhỏ tuổi nhất\Ncủa sơn môn là Thanh Y ra ngoài.
Dialogue: 0,0:36:23.60,0:36:27.04,Default,,0,0,0,,Giữ lại huyết mạch cuối cùng\Ncủa núi Đại Trạch ta.
Dialogue: 0,0:36:27.68,0:36:29.32,Default,,0,0,0,,- Chưởng giáo…\N- Xin hãy giúp tại hạ.
Dialogue: 0,0:36:30.12,0:36:31.12,Default,,0,0,0,,Sư tôn.
Dialogue: 0,0:36:31.20,0:36:32.32,Default,,0,0,0,,Sư tôn!
Dialogue: 0,0:36:32.88,0:36:34.60,Default,,0,0,0,,Đệ tử không đi đâu, sư tôn.
Dialogue: 0,0:36:36.28,0:36:37.92,Default,,0,0,0,,- Đệ tử không đi đâu.\N- Đi đi.
Dialogue: 0,0:36:38.00,0:36:40.40,Default,,0,0,0,,Đệ tử không đi đâu, sư tôn.
Dialogue: 0,0:36:41.96,0:36:43.08,Default,,0,0,0,,Đi đi!
Dialogue: 0,0:36:44.28,0:36:45.28,Default,,0,0,0,,Sư tôn.
Dialogue: 0,0:36:45.88,0:36:46.80,Default,,0,0,0,,Con không đi đâu.
Dialogue: 0,0:36:49.60,0:36:50.96,Default,,0,0,0,,Sư tôn ơi.
Dialogue: 0,0:36:54.72,0:36:55.64,Default,,0,0,0,,Con không muốn,
Dialogue: 0,0:36:55.72,0:36:56.72,Default,,0,0,0,,con không muốn.
Dialogue: 0,0:36:56.80,0:36:57.68,Default,,0,0,0,,Sư tôn,
Dialogue: 0,0:36:57.76,0:36:59.20,Default,,0,0,0,,con không muốn.
Dialogue: 0,0:36:59.28,0:37:00.60,Default,,0,0,0,,Con không muốn đi đâu.
Dialogue: 0,0:37:03.28,0:37:04.40,Default,,0,0,0,,Thanh Y,
Dialogue: 0,0:37:05.48,0:37:06.44,Default,,0,0,0,,núi Đại Trạch
Dialogue: 0,0:37:07.16,0:37:08.36,Default,,0,0,0,,nhờ cả vào con đấy.
Dialogue: 0,0:37:16.12,0:37:17.92,Default,,0,0,0,,Sư tôn!
Dialogue: 0,0:37:32.36,0:37:33.96,Default,,0,0,0,,Các đệ tử nghe lệnh.
Dialogue: 0,0:37:36.16,0:37:37.24,Default,,0,0,0,,- Có!\N- Có!
Dialogue: 0,0:37:38.44,0:37:40.00,Default,,0,0,0,,Diệt trừ yêu ma!
Dialogue: 0,0:39:05.08,0:39:08.28,Default,,0,0,0,,- Kiếm trận Vạn Trạch!\N- Kiếm trận Vạn Trạch!
Dialogue: 0,0:40:14.20,0:40:16.56,Default,,0,0,0,,ĐIỆN DIÊN THIÊN
Dialogue: 0,0:41:02.44,0:41:04.60,Default,,0,0,0,,Đám không sợ chết của núi Đại Trạch
Dialogue: 0,0:41:04.68,0:41:06.52,Default,,0,0,0,,lại dám hủy ma quân của ta ư?
Dialogue: 0,0:41:16.24,0:41:17.08,Default,,0,0,0,,Sao hả?
Dialogue: 0,0:41:17.72,0:41:18.60,Default,,0,0,0,,Buồn à?
Dialogue: 0,0:41:21.52,0:41:22.52,Default,,0,0,0,,Suýt thì ta quên mất
Dialogue: 0,0:41:23.48,0:41:25.08,Default,,0,0,0,,đám người này từng chăm sóc ngươi.
Dialogue: 0,0:41:26.16,0:41:28.36,Default,,0,0,0,,Đáng ra ta nên nương tay chút mới phải.
Dialogue: 0,0:41:29.00,0:41:30.20,Default,,0,0,0,,Yên tâm đi,
Dialogue: 0,0:41:31.12,0:41:32.80,Default,,0,0,0,,chờ bổn tôn lợi dụng ngươi xong,
Dialogue: 0,0:41:34.04,0:41:36.32,Default,,0,0,0,,tự khắc sẽ cho ngươi đi gặp bọn chúng.
Dialogue: 0,0:41:43.36,0:41:45.08,Default,,0,0,0,,Hẳn người của Tiên giới sắp tới rồi.
Dialogue: 0,0:41:46.04,0:41:48.76,Default,,0,0,0,,Một Lan Phong\Nkhông khơi mào được đại chiến Tiên Yêu,
Dialogue: 0,0:41:49.36,0:41:51.44,Default,,0,0,0,,vậy thì thêm một núi Đại Trạch,
Dialogue: 0,0:41:52.20,0:41:53.88,Default,,0,0,0,,chắc là đủ rồi nhỉ?
Dialogue: 0,0:41:53.96,0:41:56.20,Default,,0,0,0,,Bổn tôn lên kế hoạch cả trăm năm qua.
Dialogue: 0,0:41:56.28,0:41:59.28,Default,,0,0,0,,Cuối cùng ngày thiên hạ đại loạn\Ncũng tới rồi.
Dialogue: 0,0:42:11.56,0:42:13.04,Default,,0,0,0,,Đừng kẻ nào hòng sống sót.
Dialogue: 0,0:42:55.68,0:42:57.64,Default,,0,0,0,,Sao đột nhiên lòng ta lại đau thế này?
