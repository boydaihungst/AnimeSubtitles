Dialogue: 0,0:03:50.00,0:03:54.04,5-normal,,0,0,0,,{\1c&H000000&\3c&HFFFFFF&\bord4\blur4\fs55\fad(0,300)\pos(1386,824)}Tập 21 \N Ngày kỷ niệm thứ hai của cậu chủ và Alice
Dialogue: 0,0:04:11.85,0:04:12.82,Default,,0,0,0,,Chào.
Dialogue: 0,0:04:12.82,0:04:14.16,Default,,0,0,0,,Cô tới thăm tôi thật à?
Dialogue: 0,0:04:16.12,0:04:17.86,Default,,0,0,0,,Tôi đến gần thế này,
Dialogue: 0,0:04:18.54,0:04:21.31,Default,,0,0,0,,có làm phiền... cậu không?
Dialogue: 0,0:04:21.31,0:04:22.92,Default,,0,0,0,,Đừng nói thế chứ.
Dialogue: 0,0:04:22.92,0:04:24.92,Default,,0,0,0,,Tôi hoan nghênh cô còn không hết.
Dialogue: 0,0:04:26.76,0:04:28.46,Default,,0,0,0,,Đứng đây nói chuyện không hay lắm,
Dialogue: 0,0:04:28.46,0:04:30.46,Default,,0,0,0,,vào trong dùng tách trà với tôi đi.
Dialogue: 0,0:04:31.09,0:04:31.93,Default,,0,0,0,,Nhưng mà...
Dialogue: 0,0:04:32.24,0:04:35.32,Default,,0,0,0,,Tôi không thể để một quý cô\Ncứ thế mà quay về được.
Dialogue: 0,0:04:35.32,0:04:36.05,Default,,0,0,0,,Nào.
Dialogue: 0,0:04:41.52,0:04:44.06,Default,,0,0,0,,Lâu rồi tới mới vào bên trong này.
Dialogue: 0,0:04:44.06,0:04:45.87,Default,,0,0,0,,Vẫn chẳng thay đổi mấy nhỉ.
Dialogue: 0,0:04:45.87,0:04:47.06,Default,,0,0,0,,Thế sao?
Dialogue: 0,0:04:47.06,0:04:49.55,Default,,0,0,0,,Cô từng nói trước kia\Nmình hay ra vào đây nhỉ?
Dialogue: 0,0:04:50.03,0:04:51.04,Default,,0,0,0,,Phải.
Dialogue: 0,0:04:51.04,0:04:53.41,Default,,0,0,0,,Khoảng thời gian đó\Ncòn có rất nhiều khách khứa khác,
Dialogue: 0,0:04:53.41,0:04:56.32,Default,,0,0,0,,nên chúng tôi cũng không bị nổi bật quá.
Dialogue: 0,0:04:56.32,0:04:58.88,Default,,0,0,0,,Nhưng giờ thì yên ắng hơn nhiều rồi.
Dialogue: 0,0:04:58.88,0:05:01.26,Default,,0,0,0,,Do bố tôi cứ nằm mãi trong bệnh viện,
Dialogue: 0,0:05:01.26,0:05:03.07,Default,,0,0,0,,còn mẹ thì không thích nói chuyện nhiều.
Dialogue: 0,0:05:03.64,0:05:07.41,Default,,0,0,0,,Hiện giờ xung quanh\Nchỉ còn giới quý tộc đến xã giao thôi.
Dialogue: 0,0:05:07.41,0:05:08.80,Default,,0,0,0,,Thế sao...
Dialogue: 0,0:05:09.72,0:05:13.92,Default,,0,0,0,,Gerbera lại trở lại\Nvới con người trước kia của cô ấy rồi nhỉ.
Dialogue: 0,0:05:14.98,0:05:16.60,Default,,0,0,0,,Cô quen mẹ tôi à?
Dialogue: 0,0:05:16.60,0:05:20.04,Default,,0,0,0,,Chính xác hơn là tôi chỉ\Nđơn phương đứng quan sát cô ấy thôi.
Dialogue: 0,0:05:20.04,0:05:23.26,Default,,0,0,0,,Chắc cô ấy không biết đến\Nsự hiện diện của tôi đâu.
Dialogue: 0,0:05:23.97,0:05:26.48,Default,,0,0,0,,Hình như lúc đó cô ấy... khoảng mười tám tuổi.
Dialogue: 0,0:05:27.61,0:05:31.44,Default,,0,0,0,,Chỉ vừa mới học xong thôi\Nlà Gerbera đã vào làm dâu nhà này rồi.
Dialogue: 0,0:05:32.24,0:05:34.89,Default,,0,0,0,,Có vẻ vì được nuôi lớn bởi bố mẹ nghiêm khắc,
Dialogue: 0,0:05:34.89,0:05:38.01,Default,,0,0,0,,nên cô ấy luôn thể hiện\Nlà một người rất nghiêm túc.
Dialogue: 0,0:05:38.01,0:05:41.10,Default,,0,0,0,,Nhưng tất cả đã thay đổi\Nkể từ sau khi Sharon đến.
Dialogue: 0,0:05:41.10,0:05:42.54,Default,,0,0,0,,Cô ấy cười nhiều hơn,
Dialogue: 0,0:05:42.54,0:05:44.54,Default,,0,0,0,,ngày càng nói chuyện nhiều hơn.
Dialogue: 0,0:05:44.54,0:05:46.36,Default,,0,0,0,,Trông họ lúc đó vui vẻ lắm.
Dialogue: 0,0:05:47.00,0:05:49.34,Default,,0,0,0,,Ngạc nhiên thật, mẹ mà cũng có lúc như thế à.
Dialogue: 0,0:05:50.20,0:05:53.68,Default,,0,0,0,,Có thể cô ấy hơi nghiêm khắc\Nvới con cái một chút.
Dialogue: 0,0:05:53.68,0:05:57.80,Default,,0,0,0,,Nhưng chắc đó cũng là vì muốn con mình\N lớn lên trở thành những quý tộc tuyệt vời.
Dialogue: 0,0:05:58.30,0:06:00.89,Default,,0,0,0,,Nhưng rồi Sharon trở thành như vậy,
Dialogue: 0,0:06:00.89,0:06:03.01,Default,,0,0,0,,hẳn là cô ấy phải sốc lắm.
Dialogue: 0,0:06:04.85,0:06:07.01,Default,,0,0,0,,Xin lỗi, tôi toàn nói chuyện không đâu.
Dialogue: 0,0:06:07.01,0:06:07.97,Default,,0,0,0,,Được mà.
Dialogue: 0,0:06:08.87,0:06:10.23,Default,,0,0,0,,Cảm ơn đã kể cho tôi nghe.
Dialogue: 0,0:06:14.29,0:06:15.68,Default,,0,0,0,,Trà nguội cả rồi.
Dialogue: 0,0:06:16.48,0:06:17.89,Default,,0,0,0,,Cô chờ đó nhé.
Dialogue: 0,0:06:17.89,0:06:19.57,Default,,0,0,0,,Để tôi rót tách khác cho.
Dialogue: 0,0:06:19.57,0:06:21.57,Default,,0,0,0,,À, không cần đâu, tôi về bây giờ đây.
Dialogue: 0,0:06:22.61,0:06:24.02,Default,,0,0,0,,Được mà.
Dialogue: 0,0:06:31.04,0:06:32.21,Default,,0,0,0,,Để cô chờ lâu.
Dialogue: 0,0:06:32.21,0:06:33.49,Default,,0,0,0,,Hầu gái sẽ...
Dialogue: 0,0:06:34.57,0:06:36.50,Default,,0,0,0,,Ơ kìa?
Dialogue: 0,0:06:37.12,0:06:39.71,5-normal,,0,0,0,,{\1c&H263537&\bord0\frz352.8\pos(795.2,620)}Gặp lại sau.
Dialogue: 0,0:06:38.05,0:06:39.71,Default,,0,0,0,,Gặp lại sau...
Dialogue: 0,0:06:44.40,0:06:46.15,Default,,0,0,0,,Chữ đẹp quá.
Dialogue: 0,0:06:53.72,0:06:56.60,Default,,0,0,0,,Đúng là ông có biết nhỉ, ông Rob?
Dialogue: 0,0:06:57.07,0:07:01.44,Default,,0,0,0,,Về hai người mặc đồ sơ trắng\Nhay ra vào dinh thự ấy.
Dialogue: 0,0:07:01.44,0:07:02.83,Default,,0,0,0,,À...
Dialogue: 0,0:07:03.36,0:07:05.18,Default,,0,0,0,,Tôi nghe người khác kể lại,
Dialogue: 0,0:07:05.18,0:07:09.04,Default,,0,0,0,,người đàn ông chột mắt họ nói\Nchắc hẳn là về ông Rob rồi.
Dialogue: 0,0:07:09.04,0:07:10.51,Default,,0,0,0,,Chột mắt à...
Dialogue: 0,0:07:10.51,0:07:12.74,Default,,0,0,0,,Không ngờ tôi có cái biệt danh\Nngầu như thế đấy...
Dialogue: 0,0:07:12.74,0:07:14.74,Default,,0,0,0,,Ối chà...
Dialogue: 0,0:07:14.74,0:07:17.53,Default,,0,0,0,,Xin lỗi vì đã giấu cô.
Dialogue: 0,0:07:17.53,0:07:20.47,Default,,0,0,0,,Nhưng cũng vì tôi thôi mà phải không?
Dialogue: 0,0:07:21.63,0:07:24.58,Default,,0,0,0,,Nếu biết hai người đó đã giết mẹ mình,
Dialogue: 0,0:07:24.58,0:07:26.77,Default,,0,0,0,,chắc hẳn tôi sẽ rất sốc.
Dialogue: 0,0:07:27.07,0:07:29.80,Default,,0,0,0,,Nên ông không có tôi biết\Nvề hai người mặc đồ sơ,
Dialogue: 0,0:07:29.80,0:07:32.72,Default,,0,0,0,,và chỉ kể lại rằng mẹ đã mất trong một vụ tai nạn.
Dialogue: 0,0:07:33.79,0:07:36.19,Default,,0,0,0,,Đúng như cô nói.
Dialogue: 0,0:07:37.33,0:07:40.98,Default,,0,0,0,,Xin hãy kể cho tôi\Nmọi điều mà ông biết về hai người đó.
Dialogue: 0,0:07:40.98,0:07:44.56,Default,,0,0,0,,Họ có thể cũng dính líu\Ntới lời nguyền của cậu chủ nữa.
Dialogue: 0,0:07:47.37,0:07:49.58,Default,,0,0,0,,Lần đầu hai người đó xuất hiện
Dialogue: 0,0:07:50.32,0:07:55.07,Default,,0,0,0,,là khi tòa dinh thự này\Nvẫn còn được xem là nhà chính.
Dialogue: 0,0:07:55.82,0:07:58.87,Default,,0,0,0,,Ông chủ là một người rất sùng đạo,
Dialogue: 0,0:07:58.87,0:08:01.91,Default,,0,0,0,,nên lúc đó chẳng ai nghĩ\Nđấy là điều gì bất thường cả.
Dialogue: 0,0:08:02.41,0:08:03.80,Default,,0,0,0,,Ông chủ mà ông nói là...
Dialogue: 0,0:08:03.80,0:08:05.62,Default,,0,0,0,,À, là ông của cậu chủ.
Dialogue: 0,0:08:06.06,0:08:09.91,Default,,0,0,0,,Cũng là người đã thuê tôi về làm quản gia.
Dialogue: 0,0:08:10.54,0:08:13.14,Default,,0,0,0,,Ngài ấy rất thân với cô Sharon đấy.
Dialogue: 0,0:08:13.14,0:08:14.92,Default,,0,0,0,,Cô không nhớ gì về họ sao?
Dialogue: 0,0:08:14.92,0:08:16.22,Default,,0,0,0,,Tôi xin lỗi.
Dialogue: 0,0:08:16.22,0:08:20.10,Default,,0,0,0,,Ký ức lúc nhỏ của tôi\Nngoài những chuyện của cậu chủ ra thì...
Dialogue: 0,0:08:20.92,0:08:24.63,Default,,0,0,0,,Mẹ tôi và ông chủ\Ncó quan hệ thế nào ạ?
Dialogue: 0,0:08:24.63,0:08:26.82,Default,,0,0,0,,Không phải quan hệ gì không đứng đắn đâu.
Dialogue: 0,0:08:26.82,0:08:30.29,Default,,0,0,0,,Họ chỉ đơn giản là rất thân với nhau thôi.
Dialogue: 0,0:08:30.69,0:08:33.89,Default,,0,0,0,,Hai người họ vừa là chủ tớ, vừa là bạn bè,
Dialogue: 0,0:08:33.89,0:08:35.12,Default,,0,0,0,,lại như cha con.
Dialogue: 0,0:08:35.12,0:08:37.78,Default,,0,0,0,,Hay cũng có khi như thầy trò nữa.
Dialogue: 0,0:08:38.65,0:08:42.24,Default,,0,0,0,,Tôi rất thích ngắm nhìn hai người họ.
Dialogue: 0,0:08:42.24,0:08:48.00,Default,,0,0,0,,Thế nên khi nhìn thấy cậu chủ\Nvà cô Alice hợp nhau
Dialogue: 0,0:08:48.83,0:08:51.46,Default,,0,0,0,,tôi không khỏi nghĩ rằng đây chính là định mệnh.
Dialogue: 0,0:08:55.96,0:08:57.06,Default,,0,0,0,,Ôi.
Dialogue: 0,0:08:57.06,0:08:59.81,Default,,0,0,0,,Chúng ta đang nói chuyện gì ấy nhỉ?
Dialogue: 0,0:08:59.81,0:09:02.06,Default,,0,0,0,,Về vụ hai người mặc đồ sơ ạ.
Dialogue: 0,0:09:02.06,0:09:04.34,Default,,0,0,0,,À, phải rồi.
Dialogue: 0,0:09:04.34,0:09:06.70,Default,,0,0,0,,Từ khi ông chủ mất
Dialogue: 0,0:09:06.70,0:09:09.54,Default,,0,0,0,,tôi cũng không còn thấy bóng dáng\Ncủa hai cô sơ đó nữa.
Dialogue: 0,0:09:09.54,0:09:13.06,Default,,0,0,0,,Lần cuối tôi thấy họ\Nchính là lúc họ bế cô Sharon đi.
Dialogue: 0,0:09:13.06,0:09:14.92,Default,,0,0,0,,Rồi sau đó cậu chủ dính phải lời nguyền,
Dialogue: 0,0:09:14.92,0:09:17.36,Default,,0,0,0,,mọi chuyện trong dinh thự cứ rối tung cả lên.
Dialogue: 0,0:09:17.67,0:09:21.59,Default,,0,0,0,,Tôi chẳng có thì giờ để mà nghĩ về họ nữa.
Dialogue: 0,0:09:21.59,0:09:24.84,Default,,0,0,0,,Đó là tất cả những gì tôi biết rồi.
Dialogue: 0,0:09:24.84,0:09:26.41,Default,,0,0,0,,Xin cảm ơn ông.
Dialogue: 0,0:09:27.22,0:09:29.35,Default,,0,0,0,,Tôi sẽ đi nói lại với cậu chủ.
Dialogue: 0,0:09:30.39,0:09:34.59,Default,,0,0,0,,Nghe tiếng đàn piano này\Nđột nhiên tôi lại muốn được gặp cậu chủ.
Dialogue: 0,0:09:35.73,0:09:37.79,Default,,0,0,0,,Dù cả hai đã ở bên nhau suốt còn gì.
Dialogue: 0,0:09:37.79,0:09:38.56,Default,,0,0,0,,Kể cả thế ạ.
Dialogue: 0,0:09:39.39,0:09:41.63,Default,,0,0,0,,Ông Rob cũng nhanh vào trong đi ạ.
Dialogue: 0,0:09:41.63,0:09:43.30,Default,,0,0,0,,Ông sẽ bị cảm đấy.
Dialogue: 0,0:09:44.14,0:09:45.78,Default,,0,0,0,,Không sao, cô không cần lo cho tôi.
Dialogue: 0,0:09:47.22,0:09:49.79,Default,,0,0,0,,Tôi đang muốn ngắm mưa mà.
Dialogue: 0,0:10:06.52,0:10:10.60,Default,,0,0,0,,Nếu không có chỗ nào để đi\Nthì hãy đến dinh thự trong khu rừng phía bắc đi.
Dialogue: 0,0:10:27.98,0:10:33.00,5-normal,,0,0,0,,{\fad(900,0)\pos(982,442)}Công Tước Tử Thần Và Cô Hầu 2
Dialogue: 0,0:10:37.28,0:10:39.43,Default,,0,0,0,,Mưa như trút nước nhỉ.
Dialogue: 0,0:10:39.43,0:10:41.26,Default,,0,0,0,,Hôm nay gánh xiếc nghỉ hả?
Dialogue: 0,0:10:41.26,0:10:42.28,Default,,0,0,0,,À, phải.
Dialogue: 0,0:10:42.28,0:10:44.28,Default,,0,0,0,,Buổi diễn tiếp theo là vào...
Dialogue: 0,0:10:44.28,0:10:46.46,Default,,0,0,0,,Cô là Dulles phải không vậy?
Dialogue: 0,0:10:46.46,0:10:47.38,Default,,0,0,0,,Đúng thì sao?
Dialogue: 0,0:10:47.38,0:10:50.98,Default,,0,0,0,,Mới hôm nào còn cứng đầu\Nkhông cho ai nhìn mặt mà.
Dialogue: 0,0:10:50.98,0:10:52.33,Default,,0,0,0,,Giờ thì không sao rồi hả?
Dialogue: 0,0:10:52.65,0:10:53.94,Default,,0,0,0,,Không sao hết.
Dialogue: 0,0:10:53.94,0:10:56.18,Default,,0,0,0,,Từ giờ tôi sẽ sống như thế này.
Dialogue: 0,0:10:56.18,0:10:57.72,Default,,0,0,0,,Sao cứ bắt tôi phải nhắc lại hả?
Dialogue: 0,0:10:57.72,0:10:59.56,Default,,0,0,0,,Đâu, tôi mới nghe lần đầu mà.
Dialogue: 0,0:10:59.56,0:11:01.73,Default,,0,0,0,,Cô đúng là mỹ nhân đúng như trong lời đồn mà.
Dialogue: 0,0:11:01.73,0:11:04.32,Default,,0,0,0,,Đúng gu tôi không chừng.
Dialogue: 0,0:11:06.40,0:11:10.07,Default,,0,0,0,,Thôi chết, hôm nay không có Cuff ở đây.
Dialogue: 0,0:11:10.07,0:11:13.03,Default,,0,0,0,,Không có ai đáp xoáy sao mà nói chuyện.
Dialogue: 0,0:11:13.03,0:11:15.53,Default,,0,0,0,,Thế cô đến làm gì đây?
Dialogue: 0,0:11:15.53,0:11:18.33,Default,,0,0,0,,Chắc không chỉ đến trưng cái mặt ra thôi đâu nhỉ?
Dialogue: 0,0:11:18.33,0:11:20.16,Default,,0,0,0,,Tôi đã nghĩ thế này,
Dialogue: 0,0:11:20.16,0:11:22.64,Default,,0,0,0,,từ giờ hãy bỏ qua thù địch mà giúp nhau đi.
Dialogue: 0,0:11:22.64,0:11:23.87,Default,,0,0,0,,Hả?
Dialogue: 0,0:11:24.29,0:11:25.87,Default,,0,0,0,,Tôi đã nhận ra,
Dialogue: 0,0:11:25.87,0:11:28.17,Default,,0,0,0,,chỉ cần hợp tác với các người
Dialogue: 0,0:11:28.17,0:11:31.12,Default,,0,0,0,,thì trước sau gì tôi cũng sẽ\Nđạt được mục tiêu của mình thôi.
Dialogue: 0,0:11:31.12,0:11:33.34,Default,,0,0,0,,Lại thích nói gì thì nói rồi.
Dialogue: 0,0:11:33.87,0:11:35.34,Default,,0,0,0,,Tin tôi đi.
Dialogue: 0,0:11:35.34,0:11:38.21,Default,,0,0,0,,Tôi đã nói với nhóm cậu nhóc đó rồi.
Dialogue: 0,0:11:38.21,0:11:40.45,Default,,0,0,0,,Nếu nghi ngờ thì cậu cứ đi mà xác nhận.
Dialogue: 0,0:11:40.45,0:11:41.90,Default,,0,0,0,,Biết rồi mà.
Dialogue: 0,0:11:41.90,0:11:44.56,Default,,0,0,0,,Cô vừa bí hiểm vừa xấu tính,
Dialogue: 0,0:11:44.56,0:11:46.01,Default,,0,0,0,,nhưng không phải kẻ nói dối.
Dialogue: 0,0:11:46.46,0:11:48.75,Default,,0,0,0,,Thế, cô cần tôi làm gì đây?
Dialogue: 0,0:11:48.75,0:11:50.02,Default,,0,0,0,,Hôm nay chỉ mới có gợi ý thôi.
Dialogue: 0,0:11:50.33,0:11:54.10,Default,,0,0,0,,Trước tiên hãy tìm hiểu về chị tôi, về Sade đi.
Dialogue: 0,0:11:54.10,0:11:55.12,Default,,0,0,0,,Hả?
Dialogue: 0,0:11:55.12,0:11:58.31,Default,,0,0,0,,Chị của cô mà, cô kể quách tôi nghe cho rồi đi.
Dialogue: 0,0:11:58.31,0:11:59.99,Default,,0,0,0,,Mấy chuyện đó mà còn gợi ý-
Dialogue: 0,0:12:01.25,0:12:02.70,Default,,0,0,0,,Quên rồi hả?
Dialogue: 0,0:12:10.46,0:12:11.99,Default,,0,0,0,,Cô biết luôn à?
Dialogue: 0,0:12:11.99,0:12:13.24,Default,,0,0,0,,Đương nhiên rồi.
Dialogue: 0,0:12:13.72,0:12:15.88,Default,,0,0,0,,Gửi lời chào đến Cuff giúp tôi.
Dialogue: 0,0:12:16.54,0:12:19.01,Default,,0,0,0,,Tôi bỏ qua chuyện cô ấy từng đánh tôi đấy.
Dialogue: 0,0:12:19.01,0:12:19.84,Default,,0,0,0,,Ơ-Ờ.
Dialogue: 0,0:12:21.08,0:12:22.74,Default,,0,0,0,,Sade à...
Dialogue: 0,0:12:22.74,0:12:25.57,Default,,0,0,0,,Chờ Cuff về phải kể cho cô ấy nghe mới được.
Dialogue: 0,0:12:26.90,0:12:28.56,Default,,0,0,0,,Cô nghĩ thế này có thấy gớm quá không?
Dialogue: 0,0:12:29.13,0:12:31.53,Default,,0,0,0,,Còn tốn công làm bánh nữa chứ.
Dialogue: 0,0:12:31.53,0:12:34.08,Default,,0,0,0,,Được mà, chắc chắn cô ấy sẽ vui lắm.
Dialogue: 0,0:12:34.08,0:12:34.97,Default,,0,0,0,,Th-Thế sao?
Dialogue: 0,0:12:35.75,0:12:38.40,Default,,0,0,0,,Cũng cảm ơn Cuff đã bỏ công tới đây nha.
Dialogue: 0,0:12:38.40,0:12:41.70,Default,,0,0,0,,Có gì đâu, nghe Alice\Nmừng sinh nhật hai tuổi mà.
Dialogue: 0,0:12:42.11,0:12:44.08,Default,,0,0,0,,Đương nhiên tôi phải tới chúc mừng rồi.
Dialogue: 0,0:12:44.61,0:12:46.65,Default,,0,0,0,,Cô chắc vậy mà nói ra hơi kì,
Dialogue: 0,0:12:46.65,0:12:48.26,Default,,0,0,0,,nhưng không phải sinh nhật hai tuổi...
Dialogue: 0,0:12:48.26,0:12:50.17,Default,,0,0,0,,Tôi sẽ múa hát cho Alice xem!
Dialogue: 0,0:12:51.95,0:12:54.13,Default,,0,0,0,,Chờ mình cản cô ấy mới chịu ngưng
Dialogue: 0,0:12:54.13,0:12:55.16,Default,,0,0,0,,Hai tuổi!
Dialogue: 0,0:12:55.16,0:12:57.58,Default,,0,0,0,,- cái trò này lại sao?\N- Hai tuổi! Hai tuổi!
Dialogue: 0,0:13:02.03,0:13:05.06,Default,,0,0,0,,Có kẻ nào đó đang liên tục la làng hai này hai nọ...
Dialogue: 0,0:13:06.64,0:13:10.56,Default,,0,0,0,,Tôi chỉ bảo với Alice là\Nhãy tới phòng này vào đúng nửa đêm thôi.
Dialogue: 0,0:13:11.14,0:13:14.88,Default,,0,0,0,,Chưa nói gì chuyện ăn mừng với có cô ở đây hết.
Dialogue: 0,0:13:14.88,0:13:17.20,Default,,0,0,0,,Mong sao cô ấy ngạc nhiên thì tốt...
Dialogue: 0,0:13:17.20,0:13:17.93,Default,,0,0,0,,Ừm.
Dialogue: 0,0:13:17.93,0:13:20.84,Default,,0,0,0,,Cơ mà, hôm nay là ngày kỷ niệm phải không?
Dialogue: 0,0:13:20.84,0:13:23.36,Default,,0,0,0,,Hay là giờ tôi về nhé?
Dialogue: 0,0:13:23.36,0:13:25.18,Default,,0,0,0,,Không cần để ý mấy chuyện đó đâu.
Dialogue: 0,0:13:25.18,0:13:26.54,Default,,0,0,0,,Tôi là người mời cô mà.
Dialogue: 0,0:13:26.54,0:13:27.84,Default,,0,0,0,,Vậy thì ở lại!
Dialogue: 0,0:13:27.84,0:13:30.24,Default,,0,0,0,,Mong sao bữa tiệc bất ngờ\Ncho Alice thành công ha!
Dialogue: 0,0:13:30.24,0:13:32.49,Default,,0,0,0,,Làm ơn để ý âm lượng cái!
Dialogue: 0,0:13:38.07,0:13:39.12,Default,,0,0,0,,Xin phép ạ.
Dialogue: 0,0:13:39.12,0:13:39.92,Default,,0,0,0,,T-Tới rồi!
Dialogue: 0,0:13:41.29,0:13:42.64,Default,,0,0,0,,Ôi, sao tối thui vậy?
Dialogue: 0,0:13:42.64,0:13:45.17,Default,,0,0,0,,Cậu chủ và... Cuff cũng ở đây sao?
Dialogue: 0,0:13:45.17,0:13:47.07,Default,,0,0,0,,A-Alice nè...
Dialogue: 0,0:13:47.07,0:13:50.56,Default,,0,0,0,,Hôm nay là kỷ niệm hai năm\Nngày cô đến dinh thự đó.
Dialogue: 0,0:13:50.83,0:13:51.72,Default,,0,0,0,,Thế nên...
Dialogue: 0,0:13:51.72,0:13:53.50,Default,,0,0,0,,Cái bánh trông tuyệt quá.
Dialogue: 0,0:13:53.50,0:13:56.26,Default,,0,0,0,,Là cậu chủ đích thân làm cho tôi ạ?
Dialogue: 0,0:13:56.85,0:13:57.88,Default,,0,0,0,,Ừm!
Dialogue: 0,0:13:57.88,0:13:59.62,Default,,0,0,0,,Xin cảm ơn cậu chủ.
Dialogue: 0,0:13:59.62,0:14:03.67,Default,,0,0,0,,Ra cậu cứ ở lì trong bếp từ sáng\Nlà để làm việc này.
Dialogue: 0,0:14:03.67,0:14:05.54,Default,,0,0,0,,Dù chưa biết có ngon không nữa.
Dialogue: 0,0:14:06.57,0:14:08.73,Default,,0,0,0,,Tôi sợ phí không dám ăn luôn.
Dialogue: 0,0:14:10.06,0:14:13.12,Default,,0,0,0,,Alice, cảm ơn cô vì hai năm qua.
Dialogue: 0,0:14:13.12,0:14:15.22,Default,,0,0,0,,Từ giờ vẫn hãy ở bên tôi nhé.
Dialogue: 0,0:14:15.77,0:14:17.96,Default,,0,0,0,,Cậu chủ...
Dialogue: 0,0:14:20.76,0:14:24.13,Default,,0,0,0,,Tôi cũng vậy, từ giờ trở đi...
Dialogue: 0,0:14:24.13,0:14:28.75,Default,,0,0,0,,nếu được mãi ở bên cậu chủ\Nthì tôi sẽ rất hạnh phúc.
Dialogue: 0,0:14:32.80,0:14:35.29,Default,,0,0,0,,À, tôi cũng có quà nè.
Dialogue: 0,0:14:35.29,0:14:37.84,Default,,0,0,0,,Trang phục tôi cùng Viola chọn mua đó.
Dialogue: 0,0:14:37.84,0:14:40.26,Default,,0,0,0,,Ôi, xin cảm ơn cô.
Dialogue: 0,0:14:40.26,0:14:41.60,Default,,0,0,0,,Mặc thử liền luôn đi.
Dialogue: 0,0:14:41.60,0:14:42.50,Default,,0,0,0,,Giờ luôn á!?
Dialogue: 0,0:14:42.50,0:14:45.76,Default,,0,0,0,,Kh-Không được! Có tôi ở đây mà\Nsao thay đồ được chứ!
Dialogue: 0,0:14:45.76,0:14:47.37,Default,,0,0,0,,Tôi không để tâm đâu ạ.
Dialogue: 0,0:14:47.37,0:14:48.70,Default,,0,0,0,,Nhưng tôi thì có đấy!
Dialogue: 0,0:14:49.12,0:14:50.70,Default,,0,0,0,,Thế sao, tiếc thật.
Dialogue: 0,0:14:50.70,0:14:52.96,Default,,0,0,0,,Nào Alice, thổi đi.
Dialogue: 0,0:14:54.41,0:14:55.53,Default,,0,0,0,,Không phải thổi tôi!
Dialogue: 0,0:14:55.53,0:14:57.42,Default,,0,0,0,,Thổi nến trên bánh này!
Dialogue: 0,0:14:57.42,0:14:59.76,Default,,0,0,0,,Ôi, tôi nhầm ạ.
Dialogue: 0,0:14:59.76,0:15:02.00,Default,,0,0,0,,Còn chẳng thèm che giấu thái độ cố tình nữa.
Dialogue: 0,0:15:05.75,0:15:07.57,Default,,0,0,0,,Cậu chủ không sao chứ ạ?
Dialogue: 0,0:15:07.57,0:15:10.93,Default,,0,0,0,,À, tôi quên chưa tính tới chuyện này.
Dialogue: 0,0:15:11.59,0:15:15.11,Default,,0,0,0,,Mắt chưa quen bóng tối\Nthì hai người đừng động đậy nhé.
Dialogue: 0,0:15:15.11,0:15:17.01,Default,,0,0,0,,Lỡ mà chạm phải tôi thì chết.
Dialogue: 0,0:15:17.01,0:15:17.78,Default,,0,0,0,,Rồi.
Dialogue: 0,0:15:17.78,0:15:18.89,Default,,0,0,0,,Tôi hiểu rồi ạ.
Dialogue: 0,0:15:20.72,0:15:22.62,Default,,0,0,0,,Đây là tiếng gì vậy?
Dialogue: 0,0:15:23.05,0:15:24.72,Default,,0,0,0,,Tôi nghĩ nếu tối như thế này
Dialogue: 0,0:15:24.72,0:15:27.66,Default,,0,0,0,,thì mình có thể thay đồ được ạ.
Dialogue: 0,0:15:27.66,0:15:28.82,Default,,0,0,0,,Tôi đang cởi đồ đây.
Dialogue: 0,0:15:31.76,0:15:33.45,Default,,0,0,0,,Dù không nhìn thấy...
Dialogue: 0,0:15:33.45,0:15:34.52,Default,,0,0,0,,Nhưng âm thanh...!
Dialogue: 0,0:15:34.52,0:15:36.21,Default,,0,0,0,,Cuff, cho tôi xin chút ánh sáng.
Dialogue: 0,0:15:36.21,0:15:37.39,Default,,0,0,0,,Ừm.
Dialogue: 0,0:15:45.88,0:15:47.14,Default,,0,0,0,,Mềm mại bồng bềnh quá.
Dialogue: 0,0:15:47.77,0:15:50.64,Default,,0,0,0,,D-Dễ thương... dễ thương quá...
Dialogue: 0,0:15:50.64,0:15:52.64,Default,,0,0,0,,Cô dễ thương lắm đó Alice!
Dialogue: 0,0:15:52.64,0:15:54.35,Default,,0,0,0,,Cảm ơn hai người đã khen.
Dialogue: 0,0:16:17.05,0:16:19.13,Default,,0,0,0,,Hết hồn thật luôn đó.
Dialogue: 0,0:16:19.13,0:16:22.32,Default,,0,0,0,,Ai ngờ tiễn cô về thì lại thấy cảnh này chứ.
Dialogue: 0,0:16:22.32,0:16:24.94,Default,,0,0,0,,Chắc là mấy tấm ván lợp mái bị mục đấy ạ.
Dialogue: 0,0:16:24.94,0:16:27.10,Default,,0,0,0,,Cũng may mà mưa đã tạnh rồi.
Dialogue: 0,0:16:27.10,0:16:29.68,Default,,0,0,0,,Ngày kỷ niệm thế mà lại...
Dialogue: 0,0:16:29.68,0:16:32.06,Default,,0,0,0,,Nói chung là tối nay cô ngủ trong dinh thự đi.
Dialogue: 0,0:16:32.41,0:16:35.65,Default,,0,0,0,,Tôi sẽ cố gắng để không làm phiền\Ngiấc ngủ của cậu chủ ạ.
Dialogue: 0,0:16:35.65,0:16:37.92,Default,,0,0,0,,Sao đã xác định là sẽ ngủ chung rồi!?
Dialogue: 0,0:16:37.92,0:16:39.92,Default,,0,0,0,,Tiện cho hỏi, có thấy Dulles đâu không?
Dialogue: 0,0:16:39.92,0:16:41.52,Default,,0,0,0,,À, tôi không thấy...
Dialogue: 0,0:16:41.52,0:16:45.23,Default,,0,0,0,,C-Cô là nhỏ Gal thuộc hạ của Dulles!
Dialogue: 0,0:16:46.72,0:16:48.95,Default,,0,0,0,,Ketochin điều khiển thực vật đây.
Dialogue: 0,0:16:49.44,0:16:53.52,Default,,0,0,0,,Tôi không còn thù cậu\Nvì đã làm khô héo cây của tôi nữa đâu.
Dialogue: 0,0:16:53.52,0:16:56.03,Default,,0,0,0,,Gal không thù dai chuyện nhỏ nhặt.
Dialogue: 0,0:16:56.03,0:16:57.80,Default,,0,0,0,,V-Vậy thì cảm ơn cô.
Dialogue: 0,0:16:58.30,0:17:00.49,Default,,0,0,0,,Mà tiện hỏi, vụ này là thế nào đây?
Dialogue: 0,0:17:00.49,0:17:03.25,Default,,0,0,0,,Tôi vừa định đi ngủ thì mái nhà sập xuống.
Dialogue: 0,0:17:04.56,0:17:06.45,Default,,0,0,0,,Có vẻ như tôi sửa được đó.
Dialogue: 0,0:17:06.45,0:17:08.22,Default,,0,0,0,,Cứ giao cho Ketochin này.
Dialogue: 0,0:17:08.22,0:17:09.75,Default,,0,0,0,,Ể, cây á!?
Dialogue: 0,0:17:09.75,0:17:11.58,Default,,0,0,0,,Nó là vật liệu xây dựng tốt lắm đó.
Dialogue: 0,0:17:11.58,0:17:14.01,Default,,0,0,0,,Ch-Chờ chút đã, rốt cuộc cô định...
Dialogue: 0,0:17:14.01,0:17:17.16,Default,,0,0,0,,Để tôi tự sửa cái phòng này lại cho.
Dialogue: 0,0:17:17.16,0:17:17.94,Default,,0,0,0,,Ôi.
Dialogue: 0,0:17:17.94,0:17:19.94,Default,,0,0,0,,Sao cô lại giúp chúng tôi,\Ncòn đêm hôm thế này nữa?
Dialogue: 0,0:17:19.94,0:17:22.11,Default,,0,0,0,,Hỏi gì mà lắm thế.
Dialogue: 0,0:17:22.11,0:17:23.99,Default,,0,0,0,,Nhanh ra ngoài đi chờ người ta nhờ.
Dialogue: 0,0:17:25.52,0:17:26.98,Default,,0,0,0,,Gal đáng sợ quá.
Dialogue: 0,0:17:26.98,0:17:27.85,Default,,0,0,0,,Ngoan ngoan.
Dialogue: 0,0:17:28.34,0:17:30.14,Default,,0,0,0,,Một đêm là sửa xong thôi.
Dialogue: 0,0:17:30.14,0:17:32.91,Default,,0,0,0,,Tối nay cô kiếm chỗ nào khác ngủ đi.
Dialogue: 0,0:17:35.31,0:17:37.33,Default,,0,0,0,,Chắc bản chất cô ấy không xấu...
Dialogue: 0,0:17:37.79,0:17:40.00,Default,,0,0,0,,Ừm, hẳn là người tốt rồi.
Dialogue: 0,0:17:40.00,0:17:41.08,Default,,0,0,0,,Cơ mà...
Dialogue: 0,0:17:41.08,0:17:42.21,Default,,0,0,0,,Cậu chủ,
Dialogue: 0,0:17:42.21,0:17:43.49,Default,,0,0,0,,cậu nằm bên trái được chứ ạ?
Dialogue: 0,0:17:43.49,0:17:45.49,Default,,0,0,0,,Đã bảo là không ngủ chung mà!
Dialogue: 0,0:17:45.49,0:17:46.36,Default,,0,0,0,,Nhưng mà...
Dialogue: 0,0:17:46.36,0:17:48.23,Default,,0,0,0,,Cô cứ nằm trên giường đi!
Dialogue: 0,0:17:48.23,0:17:49.71,Default,,0,0,0,,Tôi sẽ ngủ dưới sàn!
Dialogue: 0,0:17:49.71,0:17:51.56,Default,,0,0,0,,Không nằm sàn là tôi không ngủ luôn!
Dialogue: 0,0:17:51.56,0:17:54.10,Default,,0,0,0,,Lâu rồi mới thấy cậu chủ mè nheo như vậy,
Dialogue: 0,0:17:54.10,0:17:55.68,Default,,0,0,0,,dễ thương sao đó.
Dialogue: 0,0:17:59.55,0:18:02.41,Default,,0,0,0,,Sàn nhà đúng là cứng thật.
Dialogue: 0,0:18:02.41,0:18:03.85,Default,,0,0,0,,Khó ngủ quá đi.
Dialogue: 0,0:18:09.98,0:18:11.28,Default,,0,0,0,,Ơ kìa?
Dialogue: 0,0:18:11.28,0:18:14.02,Default,,0,0,0,,Đó là bông hoa hồng mình tặng nhỉ...
Dialogue: 0,0:18:14.88,0:18:17.54,Default,,0,0,0,,Cô ấy vẫn còn giữ nó à.
Dialogue: 0,0:18:17.54,0:18:19.75,Default,,0,0,0,,Mà còn trân trọng như vậy nữa.
Dialogue: 0,0:18:27.80,0:18:29.48,Default,,0,0,0,,Thích ghê nhỉ.
Dialogue: 0,0:18:32.53,0:18:33.55,Default,,0,0,0,,Ketochin.
Dialogue: 0,0:18:33.55,0:18:35.26,Default,,0,0,0,,Tôi mang nước cho cô nè.
Dialogue: 0,0:18:35.26,0:18:36.70,Default,,0,0,0,,Nghỉ tay chút đi.
Dialogue: 0,0:18:36.70,0:18:38.76,Default,,0,0,0,,Mới bắt đầu thôi mà.
Dialogue: 0,0:18:48.26,0:18:49.29,Default,,0,0,0,,Có sao không!?
Dialogue: 0,0:18:49.29,0:18:51.24,Default,,0,0,0,,Gãy móng tay rồi!
Dialogue: 0,0:18:51.24,0:18:52.28,Default,,0,0,0,,Ch-Chuyện đó á?
Dialogue: 0,0:18:52.28,0:18:54.75,Default,,0,0,0,,Cậu có bột đắp móng không!?
Dialogue: 0,0:18:54.75,0:18:56.45,Default,,0,0,0,,Xin lỗi, tôi không hiểu mấy thứ đó.
Dialogue: 0,0:18:57.24,0:18:59.41,Default,,0,0,0,,Ôi, mất hết hứng luôn.
Dialogue: 0,0:19:02.74,0:19:05.66,Default,,0,0,0,,Thôi chừng nào về nhờ Tetochin an ủi vậy.
Dialogue: 0,0:19:05.66,0:19:07.91,Default,,0,0,0,,Muốn học hỏi lối tư duy của Gal ghê.
Dialogue: 0,0:19:11.30,0:19:13.81,Default,,0,0,0,,Từ khi Sade mất đi,
Dialogue: 0,0:19:13.81,0:19:16.11,Default,,0,0,0,,Dulles phải miễn cưỡng dẫn dắt chúng tôi.
Dialogue: 0,0:19:16.83,0:19:19.46,Default,,0,0,0,,Tính cách cô ấy có hợp làm trùm đâu.
Dialogue: 0,0:19:19.46,0:19:22.43,Default,,0,0,0,,Chúng tôi mong Dulles\Ncó thể sống theo cách cô ấy muốn.
Dialogue: 0,0:19:22.72,0:19:24.43,Default,,0,0,0,,Do mê một tên loài người,
Dialogue: 0,0:19:24.43,0:19:29.41,Default,,0,0,0,,mê em trai của cậu quá mà giờ tâm trạng cô ấy\Nphức tạp như con gái mới lớn vậy.
Dialogue: 0,0:19:30.49,0:19:33.85,Default,,0,0,0,,Phù thủy ai cũng ghét con người hết à?
Dialogue: 0,0:19:34.58,0:19:36.52,Default,,0,0,0,,Thì tại ba cái vụ săn phù thủy ngày xưa ấy,
Dialogue: 0,0:19:36.52,0:19:39.28,Default,,0,0,0,,mà tính mạng biết bao đồng đội\Ncủa chúng tôi đã bị cướp đi rồi.
Dialogue: 0,0:19:39.28,0:19:40.22,Default,,0,0,0,,Cơ mà,
Dialogue: 0,0:19:40.22,0:19:42.22,Default,,0,0,0,,lịch sử là thứ có thể thay đổi.
Dialogue: 0,0:19:42.22,0:19:45.05,Default,,0,0,0,,Có khi hiện tại chính là thời điểm đó không chừng.
Dialogue: 0,0:19:45.69,0:19:48.32,Default,,0,0,0,,Nếu Dulles muốn thì chúng tôi
Dialogue: 0,0:19:48.32,0:19:50.32,Default,,0,0,0,,sẵn sàng sánh vai cùng con người.
Dialogue: 0,0:19:57.14,0:19:58.30,Default,,0,0,0,,Thấy sao hả?
Dialogue: 0,0:19:58.30,0:20:00.13,Default,,0,0,0,,Nội thấy cũng thay mới hết đó!
Dialogue: 0,0:20:00.13,0:20:02.18,Default,,0,0,0,,Tuyệt quá, xin cảm ơn cô.
Dialogue: 0,0:20:02.18,0:20:03.47,Default,,0,0,0,,Tôi nhìn lầm cô rồi...
Dialogue: 0,0:20:03.88,0:20:06.63,Default,,0,0,0,,Chỗ này hợp cho các nàng\Nthong thả tám chuyện lắm đó.
Dialogue: 0,0:20:06.63,0:20:08.63,Default,,0,0,0,,Tới lúc đó nhớ mời Dulles với tôi
Dialogue: 0,0:20:08.63,0:20:10.96,Default,,0,0,0,,và cả bạn gái Tetochin của tôi nữa nhé.
Dialogue: 0,0:20:10.96,0:20:11.96,Default,,0,0,0,,Có được không?
Dialogue: 0,0:20:11.96,0:20:13.63,Default,,0,0,0,,Vâng, đương nhiên rồi.
Dialogue: 0,0:20:13.63,0:20:15.52,Default,,0,0,0,,Quá đã!
Dialogue: 0,0:20:18.20,0:20:19.61,Default,,0,0,0,,Để tôi sửa lại.
Dialogue: 0,0:20:19.61,0:20:21.00,Default,,0,0,0,,Ừm, nhờ cô đấy.
Dialogue: 0,0:20:21.00,0:20:24.45,5-normal,,0,0,0,,{\an1\b1\fax-0.6\1c&H22BED5&\frz31.63\pos(688,833.6)}BÁNH \NNHÂN THỊT
Dialogue: 0,0:20:22.35,0:20:24.44,Default,,0,0,0,,Ôi, ăn ngon quá là ngon.
Dialogue: 0,0:20:24.44,0:20:26.44,Default,,0,0,0,,Tiếp theo ăn gì nữa đây?
Dialogue: 0,0:20:26.44,0:20:29.41,Default,,0,0,0,,Sao em không tham gia\Nmấy chương trình thi ăn thử đi?
Dialogue: 0,0:20:30.64,0:20:32.69,Default,,0,0,0,,Ồ, Hugo đây mà.
Dialogue: 0,0:20:34.88,0:20:36.71,Default,,0,0,0,,Bọn nào kia?
Dialogue: 0,0:20:36.71,0:20:38.50,Default,,0,0,0,,Đồng bọn cũ của em.
Dialogue: 0,0:20:38.50,0:20:39.66,Default,,0,0,0,,Kệ tụi nó, đi thôi.
Dialogue: 0,0:20:39.66,0:20:41.20,Default,,0,0,0,,Hóa ra tin đồn là thật.
Dialogue: 0,0:20:41.20,0:20:42.99,Default,,0,0,0,,Mày vào cái gánh xiếc quái dị
Dialogue: 0,0:20:42.99,0:20:45.83,Default,,0,0,0,,rồi giao du với bọn quái dị thật kìa.
Dialogue: 0,0:20:46.32,0:20:47.73,Default,,0,0,0,,Ôi Cuff ơi.
Dialogue: 0,0:20:47.73,0:20:50.24,Default,,0,0,0,,Chúng nó gọi em là bọn quái dị kìa.
Dialogue: 0,0:20:50.24,0:20:51.40,Default,,0,0,0,,Tính cả anh nữa đấy Zain.
Dialogue: 0,0:20:51.40,0:20:53.90,Default,,0,0,0,,Bày đặt nói chuyện quân tử rồi bỏ nghề móc túi.
Dialogue: 0,0:20:53.90,0:20:56.93,Default,,0,0,0,,Tưởng sao hóa ra lại đàn đúm\Ntrong cái gánh xiếc quái dị đó.
Dialogue: 0,0:20:56.93,0:20:59.00,Default,,0,0,0,,Mà cũng hợp với mày lắm đó Hugo.
Dialogue: 0,0:20:59.00,0:20:59.58,Default,,0,0,0,,Gì hả!
Dialogue: 0,0:21:01.09,0:21:01.91,Default,,0,0,0,,Đứng lại đó!
Dialogue: 0,0:21:03.39,0:21:04.64,Default,,0,0,0,,Sao anh lại cản em?
Dialogue: 0,0:21:04.64,0:21:07.23,Default,,0,0,0,,Cứ để tụi nó nói xấu gánh xiếc như vậy sao?
Dialogue: 0,0:21:07.23,0:21:08.96,Default,,0,0,0,,Đây là chuyện của Hugo,
Dialogue: 0,0:21:08.96,0:21:11.70,Default,,0,0,0,,phải để thằng nhóc\Ntự mình giải quyết ổn thỏa mới được.
Dialogue: 0,0:21:12.38,0:21:14.58,Default,,0,0,0,,Tụi nó trốn đâu hết rồi!
Dialogue: 0,0:21:23.95,0:21:26.72,Default,,0,0,0,,À, chúng tôi chỉ dọa họ một chút thôi.
Dialogue: 0,0:21:26.72,0:21:29.21,Default,,0,0,0,,Bọn này muốn cướp cặp của tôi.
Dialogue: 0,0:21:29.75,0:21:31.69,Default,,0,0,0,,Mong cậu đừng tố cáo hay gì nhé.
Dialogue: 0,0:21:31.69,0:21:33.28,Default,,0,0,0,,Khốn kiếp...
Dialogue: 0,0:21:33.28,0:21:34.15,Default,,0,0,0,,Vọt lẹ thôi!
Dialogue: 0,0:21:34.15,0:21:35.42,Default,,0,0,0,,Tránh ra Hugo!
Dialogue: 0,0:21:37.33,0:21:39.21,Default,,0,0,0,,Mày thích nói gì tao cũng được,
Dialogue: 0,0:21:39.21,0:21:41.57,Default,,0,0,0,,nhưng cấm nói xấu gánh xiếc\Nthêm lần nào nữa đấy.
Dialogue: 0,0:21:43.33,0:21:44.75,Default,,0,0,0,,Ai thèm quan tâm!
Dialogue: 0,0:21:48.05,0:21:50.49,Default,,0,0,0,,Mấy người đó là sao không biết.
Dialogue: 0,0:21:52.37,0:21:54.75,Default,,0,0,0,,Trời có mưa đâu mà.
Dialogue: 0,0:21:55.03,0:21:58.00,Default,,0,0,0,,Phải báo nhóm Zain biết cho chắc.
