Dialogue: 0,0:00:18.27,0:00:21.11,Default,,0,0,0,,{\i1}Một ngày nọ, có một tên tội phạm{\i}\N{\i1}vốn là nhà kể chuyện,{\i}
Dialogue: 0,0:00:21.69,0:00:24.78,Default,,0,0,0,,{\i1}hắn yêu cầu được trảm thủ{\i}\N{\i1}trong lúc đang kể chuyện.{\i}
Dialogue: 0,0:00:33.95,0:00:36.62,Default,,0,0,0,,{\i1}Bố của tôi, Yamada Asaemon Kichiji,{\i}
Dialogue: 0,0:00:37.50,0:00:39.37,Default,,0,0,0,,{\i1}đã chấp nhận thỉnh cầu đó.{\i}
Dialogue: 0,0:01:01.23,0:01:03.31,Default,,0,0,0,,{\i1}Người kể chuyện kết thúc vở diễn{\i}
Dialogue: 0,0:01:03.40,0:01:06.11,Default,,0,0,0,,{\i1}với một miếng hài,{\i}\N{\i1}đó cũng là lúc đầu hắn rơi xuống.{\i}
Dialogue: 0,0:01:08.44,0:01:10.95,Default,,0,0,0,,{\i1}Bản thân hắn ta còn không biết{\i}\N{\i1}mình đã lìa đầu.{\i}
Dialogue: 0,0:01:11.03,0:01:13.53,Default,,0,0,0,,{\i1}Triệt tiêu mọi đau đớn{\i}\N{\i1}và cảm xúc không cần thiết,{\i}
Dialogue: 0,0:01:13.62,0:01:14.62,Default,,0,0,0,,{\i1}nhát chém hoàn hảo.{\i}
Dialogue: 0,0:01:16.87,0:01:19.75,Default,,0,0,0,,{\i1}Kể từ ngày hôm đó, đường kiếm của bố{\i}
Dialogue: 0,0:01:19.83,0:01:21.50,Default,,0,0,0,,{\i1}đã trở thành mục tiêu của tôi.{\i}
Dialogue: 0,0:01:44.36,0:01:46.48,Default,,0,0,0,,Đúng là một nhát chém tuyệt vời!
Dialogue: 0,0:01:46.57,0:01:48.53,Default,,0,0,0,,Dù là phụ nữ nhưng cô làm tốt lắm.
Dialogue: 0,0:01:50.11,0:01:51.32,Default,,0,0,0,,Cảm ơn ngài.
Dialogue: 0,0:02:00.79,0:02:01.87,Default,,0,0,0,,Anh nhìn thấy nỗi sợ…
Dialogue: 0,0:02:02.92,0:02:06.25,Default,,0,0,0,,trong đường kiếm của em.\NAnh thấy sự chần chừ và sợ hãi.
Dialogue: 0,0:02:07.38,0:02:09.30,Default,,0,0,0,,Em sẽ khiến phạm nhân chết trong giày vò.
Dialogue: 0,0:02:12.05,0:02:13.22,Default,,0,0,0,,Em sẽ cố gắng.
Dialogue: 0,0:02:31.65,0:02:34.41,Default,,0,0,0,,Sagiri, nhìn lưỡi kiếm của em đi.
Dialogue: 0,0:02:37.37,0:02:39.66,Default,,0,0,0,,Lưỡi kiếm phản chiếu sự thật.
Dialogue: 0,0:02:40.45,0:02:42.58,Default,,0,0,0,,{\i1}Nỗi sợ ghì nặng lưỡi kiếm,{\i}
Dialogue: 0,0:02:42.66,0:02:44.42,Default,,0,0,0,,{\i1}khiến phạm nhân phải chịu đau đớn,{\i}
Dialogue: 0,0:02:44.50,0:02:46.04,Default,,0,0,0,,{\i1}điều đó lại càng ghì nặng lưỡi kiếm hơn.{\i}
Dialogue: 0,0:02:48.50,0:02:51.76,Default,,0,0,0,,{\i1}Làm sao… mình có thể…{\i}
Dialogue: 0,0:02:51.84,0:02:54.05,Default,,0,0,0,,{\i1}triệt tiêu sự đắn đo{\i}\N{\i1}và sợ hãi trong tim mình?{\i}
Dialogue: 0,0:02:57.97,0:02:59.26,Default,,0,0,0,,{\i1}Như bố vậy.{\i}
Dialogue: 0,0:03:04.48,0:03:05.56,Default,,0,0,0,,{\i1}Phải chi…{\i}
Dialogue: 0,0:03:09.69,0:03:11.44,Default,,0,0,0,,{\i1}có một mạng sống mà mình có thể giết{\i}
Dialogue: 0,0:03:12.74,0:03:14.19,Default,,0,0,0,,{\i1}mà không chần chừ.{\i}
Dialogue: 0,0:04:53.42,0:04:56.84,Default,,0,0,0,,Chào mừng các phạm nhân.
Dialogue: 0,0:04:57.92,0:05:01.09,Default,,0,0,0,,Trước mắt chúng ta\Nlà thập nhất đại tướng quân.
Dialogue: 0,0:05:01.68,0:05:03.60,Default,,0,0,0,,Đại nhân Nariyoshi Tokugawa.
Dialogue: 0,0:05:03.68,0:05:05.31,Default,,0,0,0,,Ngài ấy là một người rất mực cao quý,
Dialogue: 0,0:05:05.39,0:05:07.60,Default,,0,0,0,,nhất là khi so sánh\Nvới những tội đồ như các ngươi.
Dialogue: 0,0:05:07.68,0:05:09.27,Default,,0,0,0,,- Cái quái gì thế?\N- Nói cái gì thế?
Dialogue: 0,0:05:09.35,0:05:11.60,Default,,0,0,0,,- Đang giỡn mặt hả?\N- Gã khốn này là ai?
Dialogue: 0,0:05:12.56,0:05:14.86,Default,,0,0,0,,Tập trung nhiều tội phạm thế này\Ncó an toàn không?
Dialogue: 0,0:05:14.94,0:05:16.73,Default,,0,0,0,,Đó là lệnh của đại nhân.
Dialogue: 0,0:05:19.82,0:05:23.49,Default,,0,0,0,,{\an8\i1}Tên cướp đã giết 30 mạng người,{\i}\N{\i1}Tanio Seikichi.{\i}
Dialogue: 0,0:05:26.33,0:05:28.54,Default,,0,0,0,,{\i1}Nikimaru, tội phạm phóng hoả hàng loạt.{\i}
Dialogue: 0,0:05:29.16,0:05:31.75,Default,,0,0,0,,{\i1}Đồng loã giết người, Kido Shukan.{\i}
Dialogue: 0,0:05:32.46,0:05:34.84,Default,,0,0,0,,{\an8\i1}Đây là những tên côn đồ{\i}\N{\i1}đã làm náo loạn xã hội.{\i}
Dialogue: 0,0:05:37.84,0:05:39.72,Default,,0,0,0,,Tôi không thở được.
Dialogue: 0,0:05:39.80,0:05:42.05,Default,,0,0,0,,Tôi muốn thấy mặt Tokugawa.
Dialogue: 0,0:05:42.13,0:05:43.01,Default,,0,0,0,,Không được.
Dialogue: 0,0:05:43.72,0:05:45.76,Default,,0,0,0,,Từ giờ, phải nghe theo mệnh lệnh của ta.
Dialogue: 0,0:05:46.35,0:05:47.77,Default,,0,0,0,,Các ngươi sẽ đến Shinsenkyo,
Dialogue: 0,0:05:47.85,0:05:50.81,Default,,0,0,0,,mang tiên dược trường sinh về.
Dialogue: 0,0:05:51.48,0:05:52.90,Default,,0,0,0,,Người hoàn thành nhiệm vụ
Dialogue: 0,0:05:52.98,0:05:55.02,Default,,0,0,0,,sẽ được ân xá hoàn toàn.
Dialogue: 0,0:05:55.11,0:05:56.77,Default,,0,0,0,,Thật hả? Nghe thấy chứ?
Dialogue: 0,0:05:57.36,0:06:00.28,Default,,0,0,0,,Theo điều lệ của lệnh ân xá hoàng gia này.
Dialogue: 0,0:06:02.86,0:06:04.57,Default,,0,0,0,,{\i1}Bầu không khí đã thay đổi.{\i}
Dialogue: 0,0:06:08.70,0:06:11.83,Default,,0,0,0,,Có được nó, mình lại có thể\Ngiết thêm nhiều người nữa.
Dialogue: 0,0:06:11.91,0:06:13.04,Default,,0,0,0,,{\i1}Adachi Matagoro.{\i}
Dialogue: 0,0:06:14.00,0:06:17.09,Default,,0,0,0,,{\i1}Kẻ giết phụ nữ và trẻ em để thoả đam mê.{\i}
Dialogue: 0,0:06:17.17,0:06:19.55,Default,,0,0,0,,{\i1}Tên quái vật thực thụ. Nếu…{\i}
Dialogue: 0,0:06:20.09,0:06:23.80,Default,,0,0,0,,hắn là tội đồ xứng đáng nhận cái chết,\Nliệu mình có thể giết hắn mà không do dự?
Dialogue: 0,0:06:38.77,0:06:41.07,Default,,0,0,0,,Cậu là Gabimaru, Kẻ Vô Hồn à?
Dialogue: 0,0:06:41.90,0:06:44.32,Default,,0,0,0,,Nhìn màu tóc và vóc dáng là tôi biết ngay.
Dialogue: 0,0:06:44.40,0:06:47.32,Default,,0,0,0,,Trong giới của tôi, cậu nổi tiếng lắm đấy.
Dialogue: 0,0:06:48.45,0:06:49.33,Default,,0,0,0,,Nhưng mà…
Dialogue: 0,0:06:51.29,0:06:52.79,Default,,0,0,0,,Thất vọng quá.
Dialogue: 0,0:06:53.33,0:06:55.25,Default,,0,0,0,,Cậu thấp hơn nhiều so với lời đồn đấy,
Dialogue: 0,0:06:55.33,0:06:57.92,Default,,0,0,0,,vừa tàn tạ vừa thấp.
Dialogue: 0,0:06:58.50,0:07:00.71,Default,,0,0,0,,Đã vậy còn bị trói nữa chứ.
Dialogue: 0,0:07:01.38,0:07:02.97,Default,,0,0,0,,Xin lỗi vì đã làm cô thất vọng.
Dialogue: 0,0:07:03.67,0:07:06.22,Default,,0,0,0,,{\i1}Đúng là lúc đầu{\i}\N{\i1}mình có chút lo lắng đối với cậu ta,{\i}
Dialogue: 0,0:07:07.30,0:07:09.93,Default,,0,0,0,,{\i1}nhưng bây giờ,{\i}\N{\i1}cậu ta như một người khác vậy.{\i}
Dialogue: 0,0:07:11.31,0:07:13.52,Default,,0,0,0,,{\i1}Cậu ta có giống những tội nhân khác không?{\i}
Dialogue: 0,0:07:14.10,0:07:16.27,Default,,0,0,0,,{\i1}Hay là như lời đồn?{\i}
Dialogue: 0,0:07:16.35,0:07:18.48,Default,,0,0,0,,{\i1}Hay còn ghê gớm hơn như thế?{\i}
Dialogue: 0,0:07:23.69,0:07:27.20,Default,,0,0,0,,Bây giờ, ta sẽ giải thích\Nvề hòn đảo mà các ngươi sẽ đến.
Dialogue: 0,0:07:28.20,0:07:29.87,Default,,0,0,0,,Đó là chốn bồng lai tiên cảnh…
Dialogue: 0,0:07:29.95,0:07:32.08,Default,,0,0,0,,- Nghe rồi!\N- Nhảm nhí!
Dialogue: 0,0:07:32.16,0:07:33.83,Default,,0,0,0,,Đang kể truyện cổ tích hả?
Dialogue: 0,0:07:34.79,0:07:37.00,Default,,0,0,0,,Bọn tội phạm các ngươi,\Nbỏ giấy che mặt ra.
Dialogue: 0,0:07:41.75,0:07:43.51,Default,,0,0,0,,Cuối cùng cũng thở được rồi.
Dialogue: 0,0:07:53.72,0:07:57.69,Default,,0,0,0,,Anh ta là người lính dự bị duy nhất\Ntrở về từ chuyến khảo sát đảo gần đây.
Dialogue: 0,0:07:58.60,0:08:01.40,Default,,0,0,0,,Như các ngươi thấy,\Nanh ta không còn là người nữa.
Dialogue: 0,0:08:06.45,0:08:09.70,Default,,0,0,0,,{\i1}Lúc trở về, khắp người anh ta{\i}\N{\i1}nổi đầy những u nhọt.{\i}
Dialogue: 0,0:08:11.07,0:08:13.70,Default,,0,0,0,,{\i1}Ngày kế tiếp, chúng nở hoa.{\i}
Dialogue: 0,0:08:14.58,0:08:17.37,Default,,0,0,0,,Ngoài anh ta ra,\Nhơn 60 thành viên khác của đội khảo sát
Dialogue: 0,0:08:17.46,0:08:18.71,Default,,0,0,0,,vẫn đang mất tích.
Dialogue: 0,0:08:21.25,0:08:22.92,Default,,0,0,0,,Điều gì đã xảy ra trên đảo?
Dialogue: 0,0:08:24.84,0:08:27.47,Default,,0,0,0,,Không biết được vì nhân chứng\Nduy nhất đang trong tình trạng này.
Dialogue: 0,0:08:29.01,0:08:30.97,Default,,0,0,0,,Có ai nói với bọn ta chuyện này đâu!
Dialogue: 0,0:08:31.55,0:08:33.31,Default,,0,0,0,,Đừng có la om sòm.
Dialogue: 0,0:08:33.39,0:08:36.68,Default,,0,0,0,,Chẳng phải thật kỳ diệu và đẹp đẽ\Nkhi một người đàn ông biến thành hoa sao?
Dialogue: 0,0:08:37.27,0:08:39.48,Default,,0,0,0,,Nhất là đối với lũ tội phạm các ngươi!
Dialogue: 0,0:08:40.31,0:08:42.23,Default,,0,0,0,,Cái quái gì vậy?
Dialogue: 0,0:08:42.31,0:08:45.53,Default,,0,0,0,,- Ta không đi đâu hết!\N- Đừng có giỡn mặt với bọn này!
Dialogue: 0,0:08:45.61,0:08:49.70,Default,,0,0,0,,Đủ rồi! Bọn bây đáng lẽ đều bị kết án tử,
Dialogue: 0,0:08:49.78,0:08:50.86,Default,,0,0,0,,giờ lại được tha bổng,
Dialogue: 0,0:08:50.95,0:08:53.24,Default,,0,0,0,,và còn được cơ hội đi đến cõi cực lạc nữa.
Dialogue: 0,0:08:53.33,0:08:55.41,Default,,0,0,0,,Lũ ngu các ngươi không hiểu
Dialogue: 0,0:08:55.49,0:08:57.00,Default,,0,0,0,,long trắc ẩn sâu sắc của triều đình sao?
Dialogue: 0,0:09:00.75,0:09:02.75,Default,,0,0,0,,Không ai biết gì về hòn đảo, đúng chứ?
Dialogue: 0,0:09:03.38,0:09:05.80,Default,,0,0,0,,Nếu không có tiên dược thì sao?
Dialogue: 0,0:09:05.88,0:09:07.30,Default,,0,0,0,,Nó nói đúng đấy!
Dialogue: 0,0:09:07.38,0:09:08.88,Default,,0,0,0,,{\an8}Bọn ta trở về tay trắng được không?
Dialogue: 0,0:09:09.47,0:09:11.43,Default,,0,0,0,,Xin lỗi!
Dialogue: 0,0:09:12.01,0:09:14.76,Default,,0,0,0,,Nếu các ngươi\Nkhông bằng lòng thì có thể đi.
Dialogue: 0,0:09:14.85,0:09:15.89,Default,,0,0,0,,Đây là tự nguyện.
Dialogue: 0,0:09:17.14,0:09:19.60,Default,,0,0,0,,Vậy thì tôi rút. Ghê quá.
Dialogue: 0,0:09:20.10,0:09:23.27,Default,,0,0,0,,Thà chết trước mặt bọn tay sai\Nđang đợi trong nhà lao…
Dialogue: 0,0:09:29.86,0:09:32.07,Default,,0,0,0,,Ta quên đề cập một điều.
Dialogue: 0,0:09:32.16,0:09:35.16,Default,,0,0,0,,Các ngươi sẽ lên đảo\Ncùng với một người hộ tống.
Dialogue: 0,0:09:35.24,0:09:37.74,Default,,0,0,0,,Người hộ tống sao?
Dialogue: 0,0:09:40.00,0:09:42.87,Default,,0,0,0,,Các ngươi đều đã bị kết án tử.
Dialogue: 0,0:09:42.96,0:09:44.92,Default,,0,0,0,,Luật vẫn áp dụng trên đảo.
Dialogue: 0,0:09:45.50,0:09:46.59,Default,,0,0,0,,Điều đó nghĩa là…
Dialogue: 0,0:09:55.76,0:09:58.10,Default,,0,0,0,,nếu các ngươi có bất kỳ\Nhành động kỳ quái nào trên đảo,
Dialogue: 0,0:09:58.18,0:09:59.68,Default,,0,0,0,,các ngươi sẽ bị chặt đầu ngay lập tức.
Dialogue: 0,0:10:00.35,0:10:03.77,Default,,0,0,0,,Các Yamada Asaemon sẽ đồng hành\Nvà giám sát các ngươi.
Dialogue: 0,0:10:04.86,0:10:06.94,Default,,0,0,0,,Đừng mơ đến việc bày trò.
Dialogue: 0,0:10:07.02,0:10:08.94,Default,,0,0,0,,Đừng quên ta đang nói về\Ngia tộc Yamada đấy.
Dialogue: 0,0:10:09.03,0:10:11.95,Default,,0,0,0,,Nếu các ngươi kháng cự\Nthì sẽ có kết cục như hắn.
Dialogue: 0,0:10:12.53,0:10:14.53,Default,,0,0,0,,Nếu người hộ tống của mình bị giết,
Dialogue: 0,0:10:15.12,0:10:17.95,Default,,0,0,0,,dù vô tình hay cố ý,\Ncác ngươi cũng sẽ bị chặt đầu.
Dialogue: 0,0:10:18.04,0:10:20.95,Default,,0,0,0,,Các ngươi không được phép trở về
Dialogue: 0,0:10:21.04,0:10:22.21,Default,,0,0,0,,khi thiếu người hộ tống.
Dialogue: 0,0:10:23.33,0:10:25.21,Default,,0,0,0,,- Có đúng vậy không?\N- Phải.
Dialogue: 0,0:10:26.13,0:10:27.04,Default,,0,0,0,,Tôi hiểu rồi.
Dialogue: 0,0:10:28.38,0:10:29.46,Default,,0,0,0,,{\i1}Tên này…{\i}
Dialogue: 0,0:10:30.05,0:10:32.47,Default,,0,0,0,,{\i1}Cậu ta có tinh thần thép{\i}\N{\i1}hay là kẻ ngốc đây?{\i}
Dialogue: 0,0:10:33.09,0:10:34.47,Default,,0,0,0,,Này, lại đây!
Dialogue: 0,0:10:38.93,0:10:40.22,Default,,0,0,0,,Vâng, thưa ngài.
Dialogue: 0,0:10:41.14,0:10:43.48,Default,,0,0,0,,Xin lỗi, còn một điều nữa.
Dialogue: 0,0:10:44.19,0:10:47.48,Default,,0,0,0,,Trước khi xuất phát,\Nta cần cắt giảm số người lên đảo.
Dialogue: 0,0:10:49.98,0:10:52.65,Default,,0,0,0,,Không phải ai cũng được đặt chân lên đảo.
Dialogue: 0,0:10:53.24,0:10:56.20,Default,,0,0,0,,Sức chứa của con thuyền
Dialogue: 0,0:10:56.28,0:10:57.66,Default,,0,0,0,,và số người giám sát có giới hạn.
Dialogue: 0,0:10:58.33,0:11:01.41,Default,,0,0,0,,Vì thế, ta cần các ngươi\Nphải cắt giảm số lượng.
Dialogue: 0,0:11:02.00,0:11:03.62,Default,,0,0,0,,Cắt giảm hả?
Dialogue: 0,0:11:03.71,0:11:05.42,Default,,0,0,0,,Bọn mày không hiểu hả?
Dialogue: 0,0:11:06.42,0:11:08.17,Default,,0,0,0,,Nói cách khác…
Dialogue: 0,0:11:08.75,0:11:11.55,Default,,0,0,0,,khử những tên yếu kém ngay bây giờ,\Nđúng không?
Dialogue: 0,0:11:13.26,0:11:15.68,Default,,0,0,0,,Ngươi đang làm cái quái gì vậy?
Dialogue: 0,0:11:15.76,0:11:16.93,Default,,0,0,0,,Nhìn kìa.
Dialogue: 0,0:11:17.01,0:11:19.93,Default,,0,0,0,,Việc hắn vẫn bình chân như vại\Nchứng minh ta nói đúng.
Dialogue: 0,0:11:21.97,0:11:24.68,Default,,0,0,0,,Ý hắn là chúng ta phải giết nhau!
Dialogue: 0,0:11:24.77,0:11:26.69,Default,,0,0,0,,Chậm thì chết.
Dialogue: 0,0:11:27.27,0:11:30.11,Default,,0,0,0,,Ừ thì, nếu ngươi hiểu theo cách đó,\Nta không còn gì để giải thích.
Dialogue: 0,0:11:30.19,0:11:31.48,Default,,0,0,0,,Các ngươi mà chết ở đây
Dialogue: 0,0:11:31.57,0:11:33.44,Default,,0,0,0,,thì đằng nào cũng là kẻ vô dụng thôi.
Dialogue: 0,0:11:35.28,0:11:37.91,Default,,0,0,0,,À, và không được tháo dây trói.
Dialogue: 0,0:12:24.08,0:12:26.12,Default,,0,0,0,,Phải vậy chứ!
Dialogue: 0,0:12:26.20,0:12:28.67,Default,,0,0,0,,Thời đại này rồi, đâu phải ngày nào
Dialogue: 0,0:12:28.75,0:12:30.75,Default,,0,0,0,,các ngươi cũng được\Nliều mạng mà đánh nhau.
Dialogue: 0,0:12:32.38,0:12:34.75,Default,,0,0,0,,Ta đã luôn muốn chứng kiến\Ncảnh tượng như thế này.
Dialogue: 0,0:12:35.34,0:12:36.76,Default,,0,0,0,,{\i1}Lão ta thật ngu ngốc.{\i}
Dialogue: 0,0:12:37.34,0:12:39.72,Default,,0,0,0,,{\i1}Việc này có ý nghĩa gì đâu chứ?{\i}
Dialogue: 0,0:12:40.59,0:12:43.39,Default,,0,0,0,,{\i1}Bị trói rồi thì đánh đấm được gì.{\i}
Dialogue: 0,0:12:43.47,0:12:45.64,Default,,0,0,0,,{\i1}Bị vật nhau rồi kìm chặt.{\i}
Dialogue: 0,0:12:48.73,0:12:51.15,Default,,0,0,0,,{\i1}Rốt cuộc ai cũng trở nên vô dụng.{\i}
Dialogue: 0,0:12:51.73,0:12:54.77,Default,,0,0,0,,Những tên có dấu đỏ là sao?
Dialogue: 0,0:12:55.98,0:12:58.07,Default,,0,0,0,,Trong số các phạm nhân,
Dialogue: 0,0:12:58.15,0:13:00.16,Default,,0,0,0,,có những tên có khả năng vượt trội.
Dialogue: 0,0:13:00.24,0:13:02.41,Default,,0,0,0,,Chúng là những kẻ xứng đáng được gọi
Dialogue: 0,0:13:02.49,0:13:04.03,Default,,0,0,0,,với danh xưng "kẻ siêu phàm".
Dialogue: 0,0:13:04.66,0:13:07.79,Default,,0,0,0,,Những kẻ đó được đánh dấu đỏ.
Dialogue: 0,0:13:07.87,0:13:09.62,Default,,0,0,0,,Ví dụ như tên kia.
Dialogue: 0,0:13:10.12,0:13:12.58,Default,,0,0,0,,Còn trẻ nhưng đã là\Nthủ lĩnh của một băng cướp
Dialogue: 0,0:13:12.67,0:13:16.05,Default,,0,0,0,,và lập nên thị trấn cướp\Nnằm sâu trong núi Iyo.
Dialogue: 0,0:13:17.63,0:13:20.05,Default,,0,0,0,,Người phụ nữ đó là tội phạm
Dialogue: 0,0:13:20.13,0:13:22.05,Default,,0,0,0,,trong cuộc bạo loạn tấn công\Nthành Sagiba năm ngoái.
Dialogue: 0,0:13:22.14,0:13:23.35,Default,,0,0,0,,Ả là nữ ninja
Dialogue: 0,0:13:23.43,0:13:26.22,Default,,0,0,0,,đã đánh bại mọi chư hầu trong thành.
Dialogue: 0,0:13:32.90,0:13:36.23,Default,,0,0,0,,Bậc thầy kiếm thuật tài ba được mệnh danh\Nlà "Long Kiếm" hay "Chiến binh Bát Quốc".
Dialogue: 0,0:13:38.24,0:13:41.20,Default,,0,0,0,,Một gã khổng lồ được đồn\Nđã từng ăn sống một con gấu.
Dialogue: 0,0:13:41.28,0:13:44.57,Default,,0,0,0,,Không gươm đao nào\Ngây thương tích được đến hắn.
Dialogue: 0,0:13:46.58,0:13:49.45,Default,,0,0,0,,Cảnh tượng hệt như thời Chiến Quốc.
Dialogue: 0,0:13:49.54,0:13:52.79,Default,,0,0,0,,Tâm điểm là huyền thoại sống,
Dialogue: 0,0:13:52.87,0:13:54.75,Default,,0,0,0,,Gabimaru, Kẻ Vô Hồn.
Dialogue: 0,0:13:55.29,0:13:56.29,Default,,0,0,0,,Hắn ở ngay kia.
Dialogue: 0,0:13:58.17,0:14:01.01,Default,,0,0,0,,Hả? Cậu ta không hề di chuyển.
Dialogue: 0,0:14:01.59,0:14:03.26,Default,,0,0,0,,Huyền thoại?
Dialogue: 0,0:14:09.93,0:14:11.69,Default,,0,0,0,,Sagiri, em đang bị áp lực à?
Dialogue: 0,0:14:12.89,0:14:13.81,Default,,0,0,0,,Đại nhân Eizen.
Dialogue: 0,0:14:14.35,0:14:16.98,Default,,0,0,0,,Sẽ còn ác liệt hơn\Nmột khi chúng ta đến đảo.
Dialogue: 0,0:14:19.19,0:14:20.90,Default,,0,0,0,,Không chỉ là\Nbọn tội phạm đánh nhau thôi đâu,
Dialogue: 0,0:14:21.40,0:14:23.45,Default,,0,0,0,,tính mạng chúng ta cũng sẽ nguy hiểm.
Dialogue: 0,0:14:24.70,0:14:27.37,Default,,0,0,0,,Khi chuyện đó xảy ra,\Nem có giết chúng được không?
Dialogue: 0,0:14:30.95,0:14:34.37,Default,,0,0,0,,Nhân lúc còn cơ hội,\Nđể anh nói với em một điều.
Dialogue: 0,0:14:35.71,0:14:39.25,Default,,0,0,0,,Công việc này không thích hợp với em.
Dialogue: 0,0:14:42.97,0:14:45.51,Default,,0,0,0,,Một người phụ nữ tại sao\Nphải dính đến chuyện đao kiếm chứ?
Dialogue: 0,0:14:46.09,0:14:49.60,Default,,0,0,0,,Con gái của một gia tộc samurai\Nthì nên sống bình yên trong dinh thự.
Dialogue: 0,0:14:50.97,0:14:53.44,Default,,0,0,0,,Sống cuộc đời tách biệt\Nvới công việc trảm thủ.
Dialogue: 0,0:14:59.90,0:15:02.11,Default,,0,0,0,,Với mọi sự tôn trọng, đại nhân Eizen.
Dialogue: 0,0:15:02.99,0:15:05.16,Default,,0,0,0,,Nếu có thể, em đã làm vậy rồi.
Dialogue: 0,0:15:19.25,0:15:22.09,Default,,0,0,0,,{\i1}Dùng xác người thử kiếm,{\i}
Dialogue: 0,0:15:22.17,0:15:25.18,Default,,0,0,0,,{\i1}trảm thủ, điều chế thuốc bằng xác chết.{\i}
Dialogue: 0,0:15:26.01,0:15:29.18,Default,,0,0,0,,{\i1}Cho dù không cầm kiếm{\i}\N{\i1}thì việc sinh ra trong gia tộc Yamada{\i}
Dialogue: 0,0:15:30.18,0:15:32.93,Default,,0,0,0,,{\i1}cũng là kiếm sống{\i}\N{\i1}trên cái chết của người khác rồi.{\i}
Dialogue: 0,0:15:40.52,0:15:41.57,Default,,0,0,0,,Nhận lấy này!
Dialogue: 0,0:15:43.65,0:15:45.36,Default,,0,0,0,,Đó là con gái của Asa, Kẻ Xử Trảm!
Dialogue: 0,0:15:45.45,0:15:47.07,Default,,0,0,0,,Con gái của Asa ăn thịt người!
Dialogue: 0,0:15:47.16,0:15:48.57,Default,,0,0,0,,Đồ sát nhân!
Dialogue: 0,0:15:50.41,0:15:52.66,Default,,0,0,0,,Ra đây mau!
Dialogue: 0,0:15:52.74,0:15:54.33,Default,,0,0,0,,Nhận lấy này!
Dialogue: 0,0:16:00.17,0:16:02.17,Default,,0,0,0,,{\i1}Dù có cố lờ đi bao nhiêu lần…{\i}
Dialogue: 0,0:16:19.73,0:16:22.44,Default,,0,0,0,,{\i1}Lưỡi kiếm luôn phản chiếu sự thật.{\i}
Dialogue: 0,0:16:29.20,0:16:30.41,Default,,0,0,0,,Hết cách rồi.
Dialogue: 0,0:16:30.49,0:16:32.95,Default,,0,0,0,,Hạ mấy tên samurai này rồi trốn khỏi đây.
Dialogue: 0,0:16:33.03,0:16:33.87,Default,,0,0,0,,Đại ca!
Dialogue: 0,0:16:33.95,0:16:36.37,Default,,0,0,0,,Samurai đằng kia là phụ nữ!
Dialogue: 0,0:16:36.45,0:16:39.21,Default,,0,0,0,,Giết nó rồi lấy kiếm đi!
Dialogue: 0,0:16:44.09,0:16:45.17,Default,,0,0,0,,Em giết hắn được không?
Dialogue: 0,0:16:51.05,0:16:53.14,Default,,0,0,0,,{\i1}Mình không thể nào{\i}\N{\i1}thoát được công việc trảm thủ.{\i}
Dialogue: 0,0:16:53.93,0:16:55.14,Default,,0,0,0,,{\i1}Nếu đã như thế…{\i}
Dialogue: 0,0:16:56.35,0:16:58.23,Default,,0,0,0,,{\i1}Mình không thể cứ ngồi yên và chịu trận.{\i}
Dialogue: 0,0:16:58.73,0:16:59.89,Default,,0,0,0,,{\i1}Không được!{\i}
Dialogue: 0,0:17:01.23,0:17:02.90,Default,,0,0,0,,{\i1}Mình muốn tự tay phán quyết{\i}
Dialogue: 0,0:17:02.98,0:17:04.65,Default,,0,0,0,,{\i1}hành động của mình.{\i}
Dialogue: 0,0:17:22.38,0:17:23.33,Default,,0,0,0,,{\i1}Tại sao?{\i}
Dialogue: 0,0:17:26.59,0:17:27.71,Default,,0,0,0,,{\i1}Tại sao?{\i}
Dialogue: 0,0:17:31.76,0:17:33.60,Default,,0,0,0,,Sao các người lại nghĩ\Ngiết người là chuyện hay ho?
Dialogue: 0,0:17:39.43,0:17:41.35,Default,,0,0,0,,Các người không có cách gì khác à?
Dialogue: 0,0:17:41.44,0:17:44.11,Default,,0,0,0,,Sao ngươi lại… Lùi lại!
Dialogue: 0,0:17:44.19,0:17:47.36,Default,,0,0,0,,Không phải sát nhân nào\Ncũng thích giết người.
Dialogue: 0,0:17:47.44,0:17:49.36,Default,,0,0,0,,Cận vệ đâu rồi?
Dialogue: 0,0:17:49.44,0:17:51.61,Default,,0,0,0,,Ai mà chịu được cảnh này?
Dialogue: 0,0:17:51.70,0:17:54.87,Default,,0,0,0,,Ngươi dám ăn nói hỗn xược\Nvới đại nhân vậy à?
Dialogue: 0,0:17:54.95,0:17:58.62,Default,,0,0,0,,Tôi không muốn phải giết người.
Dialogue: 0,0:17:58.70,0:18:00.29,Default,,0,0,0,,Không phải đó là lẽ thường sao?
Dialogue: 0,0:18:02.08,0:18:04.58,Default,,0,0,0,,Một kẻ phạm luật như ngươi\Nđang nói gì thế?
Dialogue: 0,0:18:04.67,0:18:06.67,Default,,0,0,0,,Nếu không thích thì đi đi.
Dialogue: 0,0:18:07.30,0:18:08.25,Default,,0,0,0,,Khỏi bàn cãi.
Dialogue: 0,0:18:10.51,0:18:11.59,Default,,0,0,0,,Các người chẳng chịu hiểu.
Dialogue: 0,0:18:13.43,0:18:15.60,Default,,0,0,0,,Này, bọn đằng kia.
Dialogue: 0,0:18:16.93,0:18:20.10,Default,,0,0,0,,Giết hắn, các ngươi sẽ được lên đảo.
Dialogue: 0,0:18:21.43,0:18:22.94,Default,,0,0,0,,Thật hả?
Dialogue: 0,0:18:24.06,0:18:26.36,Default,,0,0,0,,Đứng im nhé.
Dialogue: 0,0:18:26.86,0:18:30.78,Default,,0,0,0,,Các người cũng không muốn giết người\Nmà không có lý do, nhỉ?
Dialogue: 0,0:18:30.86,0:18:34.20,Default,,0,0,0,,Ai quan tâm. Nếu ta có thể sống,
Dialogue: 0,0:18:34.28,0:18:37.08,Default,,0,0,0,,ta rất vui khi giết ngươi.
Dialogue: 0,0:18:38.24,0:18:40.79,Default,,0,0,0,,- Đừng né chứ!\N- Chúng ta đàm phán được không?
Dialogue: 0,0:18:41.37,0:18:43.54,Default,,0,0,0,,Không muốn đánh nhau\Nthì câm miệng chịu chết đi!
Dialogue: 0,0:18:48.09,0:18:49.30,Default,,0,0,0,,Hết cách rồi.
Dialogue: 0,0:18:50.67,0:18:51.55,Default,,0,0,0,,Tôi phải giết anh thôi.
Dialogue: 0,0:18:53.47,0:18:55.39,Default,,0,0,0,,Nếu anh định giết tôi thì tôi sẽ giết anh.
Dialogue: 0,0:18:59.06,0:19:01.18,Default,,0,0,0,,Ta tưởng ngươi không muốn giết người.
Dialogue: 0,0:19:02.18,0:19:05.44,Default,,0,0,0,,Tôi không muốn nhưng mà…
Dialogue: 0,0:19:06.77,0:19:08.36,Default,,0,0,0,,Tôi cũng không thể chết.
Dialogue: 0,0:19:10.23,0:19:11.19,Default,,0,0,0,,Đâu còn cách nào khác.
Dialogue: 0,0:19:13.70,0:19:15.03,Default,,0,0,0,,Mày đang nói cái quái gì thế?
Dialogue: 0,0:19:15.11,0:19:16.70,Default,,0,0,0,,Tim tôi cảm thấy nặng nề,
Dialogue: 0,0:19:16.78,0:19:19.28,Default,,0,0,0,,khi nghĩ về những thứ mình phải chịu đựng.
Dialogue: 0,0:19:22.87,0:19:26.46,Default,,0,0,0,,Không muốn làm vậy đâu. Không muốn đâu.
Dialogue: 0,0:20:20.22,0:20:21.68,Default,,0,0,0,,Quái vật!
Dialogue: 0,0:20:22.26,0:20:23.43,Default,,0,0,0,,Vậy ra đó là…
Dialogue: 0,0:20:28.90,0:20:30.23,Default,,0,0,0,,Kẻ Vô Hồn.
Dialogue: 0,0:20:32.69,0:20:34.03,Default,,0,0,0,,{\i1}Tim tôi cảm thấy nặng nề…{\i}
Dialogue: 0,0:20:36.82,0:20:38.82,Default,,0,0,0,,{\i1}khi nghĩ về những thứ mình phải chịu đựng.{\i}
Dialogue: 0,0:20:46.20,0:20:49.37,Default,,0,0,0,,Thật là một cách độc ác và tàn bạo\Nkhi lấy mạng người khác.
Dialogue: 0,0:20:53.46,0:20:55.38,Default,,0,0,0,,Nếu tôi ra tay nhẹ nhàng hơn,\Nhọ sẽ không ghét tôi chứ?
Dialogue: 0,0:20:57.67,0:20:59.18,Default,,0,0,0,,{\i1}Điều mình cần…{\i}
Dialogue: 0,0:21:00.05,0:21:02.60,Default,,0,0,0,,{\i1}không phải là sức mạnh{\i}\N{\i1}chống lại nỗi sợ giết người.{\i}
Dialogue: 0,0:21:06.18,0:21:09.69,Default,,0,0,0,,{\i1}Mà là chuẩn bị tâm thế{\i}\N{\i1}chịu đựng nỗi sợ đó,{\i}
Dialogue: 0,0:21:09.77,0:21:11.35,Default,,0,0,0,,{\i1}chịu đựng mạng sống{\i}\N{\i1}của những người mình đã giết.{\i}
Dialogue: 0,0:21:19.82,0:21:21.86,Default,,0,0,0,,Sagiri, em có sao không?
Dialogue: 0,0:21:22.87,0:21:24.87,Default,,0,0,0,,Có lẽ công việc này quá sức với em.
Dialogue: 0,0:21:25.66,0:21:29.37,Default,,0,0,0,,Không, thưa ngài. Em muốn giết hắn.
Dialogue: 0,0:21:32.71,0:21:34.63,Default,,0,0,0,,Những tên tội đồ, vậy là đủ rồi!
Dialogue: 0,0:21:35.21,0:21:37.21,Default,,0,0,0,,Các ngươi đã được chọn cho đoàn thám hiểm.
Dialogue: 0,0:21:39.05,0:21:41.13,Default,,0,0,0,,Vua Côn Đồ, Aza Chobei.
Dialogue: 0,0:21:42.18,0:21:44.64,Default,,0,0,0,,Long Kiếm, Tamiya Gantetsusai.
Dialogue: 0,0:21:45.68,0:21:48.60,Default,,0,0,0,,Bách nhân Thợ săn, Keiun, Kẻ Cố Chấp.
Dialogue: 0,0:21:48.68,0:21:50.14,Default,,0,0,0,,Nurugai của núi rừng.
Dialogue: 0,0:21:51.81,0:21:53.65,Default,,0,0,0,,Khấn Phật Sát Nhân, Horubo.
Dialogue: 0,0:21:54.69,0:21:57.15,Default,,0,0,0,,Ninja Lạc Lối, Gabimaru, Kẻ Vô Hồn.
Dialogue: 0,0:21:58.19,0:22:03.16,Default,,0,0,0,,Ả Điếm Ăn Thịt Người, Akaginu.\NNữ Ninja, Yuzuriha Khuynh Chủ.
Dialogue: 0,0:22:04.49,0:22:06.66,Default,,0,0,0,,Kẻ Bội Giáo, Moro Makiya.
Dialogue: 0,0:22:07.70,0:22:10.41,Default,,0,0,0,,Người Khổng Lồ Làng Bizen, Rokurota.
Dialogue: 0,0:22:11.21,0:22:12.83,Default,,0,0,0,,Đó là mười thành viên được chọn.
Dialogue: 0,0:22:13.75,0:22:15.42,Default,,0,0,0,,Mỗi người sẽ đồng hành
Dialogue: 0,0:22:15.50,0:22:18.67,Default,,0,0,0,,cùng một trong những môn đồ\Ncủa gia tộc Yamada,
Dialogue: 0,0:22:18.76,0:22:21.05,Default,,0,0,0,,những đao phủ của Asaemon.
Dialogue: 0,0:22:26.80,0:22:28.06,Default,,0,0,0,,{\i1}Giờ các ngươi sẽ lên thuyền,{\i}
Dialogue: 0,0:22:28.97,0:22:31.56,Default,,0,0,0,,{\i1}và hướng đến hòn đảo hẻo lánh{\i}\N{\i1}ở vùng biển phía Nam{\i}
Dialogue: 0,0:22:32.14,0:22:34.65,Default,,0,0,0,,{\i1}để tìm kiếm tiên dược trường sinh.{\i}
Dialogue: 0,0:22:36.27,0:22:38.07,Default,,0,0,0,,{\i1}Tìm thấy thì các ngươi sẽ được tự do.{\i}
