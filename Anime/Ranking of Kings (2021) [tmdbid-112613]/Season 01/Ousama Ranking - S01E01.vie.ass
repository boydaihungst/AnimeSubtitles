Dialogue: 0,0:00:04.16,0:00:06.62,Default,,0,0,0,,"Xếp hạng quốc vương"
Dialogue: 0,0:00:06.62,0:00:10.41,Default,,0,0,0,,là dựa vào lượng kỵ sĩ giỏi giang dưới trướng,
Dialogue: 0,0:00:10.41,0:00:14.16,Default,,0,0,0,,lượng dân số, sự phồn vinh của thành phố.
Dialogue: 0,0:00:14.16,0:00:15.70,Default,,0,0,0,,Quan trọng nhất là,
Dialogue: 0,0:00:15.70,0:00:18.75,Default,,0,0,0,,bản thân quốc vương có mạnh mẽ vĩ đại\Nnhư các anh hùng không.
Dialogue: 0,0:00:18.75,0:00:20.20,Default,,0,0,0,,Tổng hợp các điều kiện trên,
Dialogue: 0,0:00:20.20,0:00:22.79,Default,,0,0,0,,để tiến hành xếp hạng vua của các nước.
Dialogue: 0,0:00:29.29,0:00:30.87,Default,,0,0,0,,Hoàng tử.
Dialogue: 0,0:00:30.87,0:00:32.62,Default,,0,0,0,,Con lại bị người ta bắt nạt nữa sao?
Dialogue: 0,0:00:34.54,0:00:36.41,Default,,0,0,0,,Không sao đâu.
Dialogue: 0,0:00:36.41,0:00:38.20,Default,,0,0,0,,Con là đứa bé kiên cường,
Dialogue: 0,0:00:38.91,0:00:41.79,Default,,0,0,0,,nhất định sẽ vượt qua được mọi khó khăn.
Dialogue: 0,0:00:42.45,0:00:46.87,Default,,0,0,0,,Sau đó con sẽ trở thành\Nquốc vương giỏi nhất thế giới.
Dialogue: 0,0:00:46.87,0:00:48.29,Default,,0,0,0,,Nhất định vậy nhé.
Dialogue: 0,0:01:22.00,0:01:26.83,Default,,0,0,0,,OUSAMA RANKING
Dialogue: 0,0:02:31.91,0:02:36.66,Default,,0,0,0,,TẬP 1: HOÀNG TỬ TỎA SÁNG
Dialogue: 0,0:03:25.20,0:03:27.04,Default,,0,0,0,,Nhìn gì mà nhìn?
Dialogue: 0,0:03:28.83,0:03:30.20,Default,,0,0,0,,Đứng đó cho ta.
Dialogue: 0,0:03:34.20,0:03:36.08,Default,,0,0,0,,Ta chưa từng gặp ngươi.
Dialogue: 0,0:03:36.08,0:03:38.70,Default,,0,0,0,,Trên đầu còn đội vương miện. Ngươi là ai?
Dialogue: 0,0:03:40.25,0:03:42.75,Default,,0,0,0,,Ta đang nói với ngươi đó, sao dám coi thường ta?
Dialogue: 0,0:03:43.58,0:03:45.25,Default,,0,0,0,,Sao cũng được.
Dialogue: 0,0:03:45.25,0:03:46.41,Default,,0,0,0,,Nghe đây.
Dialogue: 0,0:03:46.41,0:03:48.75,Default,,0,0,0,,Muốn giữ mạng sống thì đưa tiền bạc ra đây.
Dialogue: 0,0:03:50.29,0:03:51.83,Default,,0,0,0,,Nói rõ ràng ra đi.
Dialogue: 0,0:03:51.83,0:03:53.66,Default,,0,0,0,,Ta bảo ngươi đưa tiền cho ta.
Dialogue: 0,0:03:56.45,0:03:59.12,Default,,0,0,0,,Gì vậy? Ngươi không biết nói sao?
Dialogue: 0,0:03:59.95,0:04:02.16,Default,,0,0,0,,Lẽ nào ngươi cũng không nghe thấy luôn?
Dialogue: 0,0:04:04.12,0:04:06.58,Default,,0,0,0,,Vậy thì ta làm sao mà nói chuyện với ngươi?
Dialogue: 0,0:04:09.12,0:04:09.95,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:04:09.95,0:04:12.00,Default,,0,0,0,,"Tôi không có tiền"?
Dialogue: 0,0:04:12.87,0:04:15.95,Default,,0,0,0,,Ngươi có thể nhìn miệng mà đoán lời ta nói sao?
Dialogue: 0,0:04:17.95,0:04:21.00,Default,,0,0,0,,"Anh hiểu tôi nói gì sao?"
Dialogue: 0,0:04:21.00,0:04:25.00,Default,,0,0,0,,Phải, dù ta cũng không hiểu vì sao ta lại hiểu.
Dialogue: 0,0:04:25.00,0:04:26.79,Default,,0,0,0,,Mà chuyện này không quan trọng.
Dialogue: 0,0:04:26.79,0:04:29.79,Default,,0,0,0,,Không có tiền thì lột hết\Nquần áo trên người ra cho ta!
Dialogue: 0,0:04:34.12,0:04:36.12,Default,,0,0,0,,Biết nghe lời lắm. Không tệ!
Dialogue: 0,0:04:36.12,0:04:38.75,Default,,0,0,0,,Như vậy có thể giúp kẻ nghèo như ta.
Dialogue: 0,0:04:38.75,0:04:41.04,Default,,0,0,0,,Ngươi đang làm việc tốt đó.
Dialogue: 0,0:04:44.54,0:04:46.87,Default,,0,0,0,,Ngươi rất có tiền đồ.
Dialogue: 0,0:04:47.58,0:04:50.66,Default,,0,0,0,,Rất tốt. Ngày mai lại mặc quần áo đáng tiền\Ntới đây nhé.
Dialogue: 0,0:04:50.66,0:04:51.45,Default,,0,0,0,,Biết chưa?
Dialogue: 0,0:04:51.45,0:04:53.54,Default,,0,0,0,,Không được nói chuyện này cho ai.
Dialogue: 0,0:04:54.25,0:04:55.50,Default,,0,0,0,,Tốt lắm, mau đi đi.
Dialogue: 0,0:04:58.41,0:05:00.83,Default,,0,0,0,,Đúng là tên tiểu quỷ ngốc nghếch.
Dialogue: 0,0:05:08.37,0:05:09.91,Default,,0,0,0,,Đó là ai?
Dialogue: 0,0:05:09.91,0:05:12.33,Default,,0,0,0,,Là đại hoàng tử Bojji.
Dialogue: 0,0:05:12.33,0:05:14.37,Default,,0,0,0,,Cậu ta là hoàng tử sao?
Dialogue: 0,0:05:14.37,0:05:18.29,Default,,0,0,0,,Chắc là gặp cướp đường ở đâu rồi.
Dialogue: 0,0:05:18.29,0:05:20.41,Default,,0,0,0,,Vậy mà vẫn tươi cười như vậy.
Dialogue: 0,0:05:20.41,0:05:21.87,Default,,0,0,0,,Vì cậu ta ngốc mà.
Dialogue: 0,0:05:21.87,0:05:24.87,Default,,0,0,0,,Không nghe được, cũng không nói được.
Dialogue: 0,0:05:24.87,0:05:28.12,Default,,0,0,0,,Thậm chí kiếm trẻ con cũng không biết dùng.
Dialogue: 0,0:05:28.12,0:05:29.87,Default,,0,0,0,,Một hoàng tử vô dụng.
Dialogue: 0,0:05:33.58,0:05:35.20,Default,,0,0,0,,Cậu ta không đến.
Dialogue: 0,0:05:37.41,0:05:39.45,Default,,0,0,0,,Tên đó...
Dialogue: 0,0:05:39.45,0:05:41.41,Default,,0,0,0,,lẽ nào định nhân cơ hội này hại mình?
Dialogue: 0,0:06:02.45,0:06:04.50,Default,,0,0,0,,Cậu vui vẻ gì vậy?
Dialogue: 0,0:06:05.95,0:06:08.58,Default,,0,0,0,,"Được nói chuyện với anh nên rất vui."
Dialogue: 0,0:06:08.58,0:06:11.25,Default,,0,0,0,,Cái gì? Vì chuyện đó mà cậu vui sao?
Dialogue: 0,0:06:12.58,0:06:13.79,Default,,0,0,0,,Vậy sao?
Dialogue: 0,0:06:13.79,0:06:16.12,Default,,0,0,0,,Vì cậu không nghe thấy, lại còn ngốc,
Dialogue: 0,0:06:16.12,0:06:18.25,Default,,0,0,0,,nên chẳng ai chịu nói chuyện với cậu phải không?
Dialogue: 0,0:06:20.58,0:06:23.70,Default,,0,0,0,,"Đúng vậy, anh đoán trúng rồi."
Dialogue: 0,0:06:23.70,0:06:24.87,Default,,0,0,0,,Tên ngốc!
Dialogue: 0,0:06:24.87,0:06:27.33,Default,,0,0,0,,Ta đang lấy cậu làm trò đùa đó!
Dialogue: 0,0:06:28.70,0:06:31.12,Default,,0,0,0,,Cậu khó đỡ hơn ta tưởng đó.
Dialogue: 0,0:06:33.79,0:06:34.50,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:06:34.50,0:06:38.58,Default,,0,0,0,,"Ngày mai tôi sẽ đem rất nhiều quần áo\Ntới nữa, đợi tôi ở đây nhé."
Dialogue: 0,0:06:39.79,0:06:42.45,Default,,0,0,0,,Ta không làm theo lệnh của người khác đâu nhé.
Dialogue: 0,0:06:43.50,0:06:44.83,Default,,0,0,0,,Tên cậu là gì?
Dialogue: 0,0:06:46.33,0:06:47.54,Default,,0,0,0,,Bojji à?
Dialogue: 0,0:06:48.66,0:06:50.20,Default,,0,0,0,,Ta là Kage.
Dialogue: 0,0:06:52.75,0:06:54.16,Default,,0,0,0,,Không cần phải cố quá.
Dialogue: 0,0:06:54.16,0:06:56.62,Default,,0,0,0,,Vậy ngày mai nhờ cậu nhé, Bojji.
Dialogue: 0,0:07:00.66,0:07:02.75,Default,,0,0,0,,Lần đầu tiên gặp người thế này.
Dialogue: 0,0:07:03.37,0:07:05.95,Default,,0,0,0,,Dù sao quần áo của cậu ta cũng rất đáng tiền.
Dialogue: 0,0:07:05.95,0:07:07.66,Default,,0,0,0,,Mình đợi vậy.
Dialogue: 0,0:07:31.70,0:07:35.20,Default,,0,0,0,,Cái gì? Hóa ra cậu là hoàng tử\Ncủa tòa thành đó sao?
Dialogue: 0,0:07:35.20,0:07:37.33,Default,,0,0,0,,Vậy là sau này cậu sẽ làm quốc vương rồi.
Dialogue: 0,0:07:39.79,0:07:43.50,Default,,0,0,0,,"Và tôi sẽ trở thành quốc vương\Ngiỏi nhất thế giới."
Dialogue: 0,0:07:45.33,0:07:48.91,Default,,0,0,0,,Cậu làm sao mà trở thành quốc vương giỏi được?
Dialogue: 0,0:07:48.91,0:07:51.58,Default,,0,0,0,,Tai thì không nghe thấy,\Nnói cũng không nói nên lời.
Dialogue: 0,0:07:51.58,0:07:54.12,Default,,0,0,0,,Cậu đúng là ngốc quá đi mất.
Dialogue: 0,0:07:58.16,0:08:01.62,Default,,0,0,0,,Cái gì? "Dù vậy tôi cũng sẽ trở thành\Nquốc vương giỏi nhất."
Dialogue: 0,0:08:05.83,0:08:07.33,Default,,0,0,0,,Ta biết rồi.
Dialogue: 0,0:08:07.33,0:08:11.00,Default,,0,0,0,,Cậu thành quốc vương rồi xây dựng một\Nđất nước mà người dân được chơi suốt ngày đi.
Dialogue: 0,0:08:13.45,0:08:15.25,Default,,0,0,0,,Ta sẽ đợi tới ngày đó.
Dialogue: 0,0:08:27.70,0:08:29.25,Default,,0,0,0,,Bị chê cười rồi.
Dialogue: 0,0:08:29.25,0:08:31.16,Default,,0,0,0,,Dù là do mình hại,
Dialogue: 0,0:08:31.16,0:08:34.08,Default,,0,0,0,,nhưng gần đây ngày nào cũng thấy\Nbộ dạng trần như nhộng của cậu ấy,
Dialogue: 0,0:08:34.08,0:08:37.66,Default,,0,0,0,,nghĩ đến chuyện sau này cậu ấy\Nsẽ làm quốc vương là lại thấy bất an.
Dialogue: 0,0:08:38.66,0:08:41.12,Default,,0,0,0,,Xin hỏi, sao anh lại không có quần áo?
Dialogue: 0,0:08:41.12,0:08:41.83,Default,,0,0,0,,Nó còn hỏi kìa.
Dialogue: 0,0:08:41.83,0:08:42.79,Default,,0,0,0,,Tại sao?
Dialogue: 0,0:08:42.79,0:08:44.08,Default,,0,0,0,,Chắc cậu ta không nghe được.
Dialogue: 0,0:08:44.08,0:08:45.33,Default,,0,0,0,,Được rồi.
Dialogue: 0,0:08:45.33,0:08:47.70,Default,,0,0,0,,Hoàng tử không nghe thấy đâu.
Dialogue: 0,0:08:47.70,0:08:49.58,Default,,0,0,0,,Tại sao? Chẳng phải tai cậu ấy dài sao?
Dialogue: 0,0:08:49.58,0:08:52.25,Default,,0,0,0,,Có những người có tai nhưng vẫn không nghe thấy.
Dialogue: 0,0:08:52.25,0:08:54.87,Default,,0,0,0,,Vậy nếu mình nói xấu cậu ta,\Ncậu ta cũng không biết phải không?
Dialogue: 0,0:08:54.87,0:08:55.87,Default,,0,0,0,,Tên ngốc.
Dialogue: 0,0:08:55.87,0:08:57.58,Default,,0,0,0,,Đủ rồi.
Dialogue: 0,0:08:59.41,0:09:02.58,Default,,0,0,0,,Cậu nói gì đi chứ.
Dialogue: 0,0:09:06.00,0:09:07.33,Default,,0,0,0,,Cậu ta cứ ê a kìa.
Dialogue: 0,0:09:07.33,0:09:09.00,Default,,0,0,0,,Đáng thương quá.
Dialogue: 0,0:09:10.08,0:09:10.62,Default,,0,0,0,,Cậu ta chạy rồi.
Dialogue: 0,0:09:10.62,0:09:12.16,Default,,0,0,0,,Chờ đó!
Dialogue: 0,0:09:12.16,0:09:15.33,Default,,0,0,0,,Không biết nói thì kêu gì đi.
Dialogue: 0,0:09:15.33,0:09:16.91,Default,,0,0,0,,Nói gì ngớ ngẩn vậy không biết.
Dialogue: 0,0:09:23.79,0:09:25.70,Default,,0,0,0,,Cái tên này.
Dialogue: 0,0:09:25.70,0:09:28.08,Default,,0,0,0,,Hóa ra cậu ta ở chỗ nguy nga như vậy.
Dialogue: 0,0:09:28.08,0:09:30.29,Default,,0,0,0,,Đột nhiên mình thấy cáu quá.
Dialogue: 0,0:09:30.87,0:09:32.58,Default,,0,0,0,,Cả người cậu ta lại trần như nhộng vậy,
Dialogue: 0,0:09:32.58,0:09:34.25,Default,,0,0,0,,đúng là mất mặt quá đi.
Dialogue: 0,0:09:34.25,0:09:37.75,Default,,0,0,0,,Chắc cậu ta không biết\Nbản thân mình ngốc ra sao.
Dialogue: 0,0:09:37.75,0:09:39.08,Default,,0,0,0,,Đúng là hạnh phúc.
Dialogue: 0,0:09:45.16,0:09:48.33,Default,,0,0,0,,Lại để trần truồng thế này mà đi đi lại lại.
Dialogue: 0,0:09:48.33,0:09:50.37,Default,,0,0,0,,Rốt cuộc đây là chuyện gì?
Dialogue: 0,0:09:50.37,0:09:51.91,Default,,0,0,0,,"VƯƠNG PHI HILLING, THÂN MẪU NHỊ HOÀNG TỬ DAIDA"\NHoàng tử Bojji.
Dialogue: 0,0:09:51.91,0:09:53.62,Default,,0,0,0,,"VƯƠNG PHI HILLING, THÂN MẪU NHỊ HOÀNG TỬ DAIDA"\NChắc là
Dialogue: 0,0:09:53.62,0:09:56.00,Default,,0,0,0,,"ĐẠI THẦN PHÁP VỤ SANDIO"\Ngặp cường đạo trên đường rồi.
Dialogue: 0,0:09:57.16,0:09:59.20,Default,,0,0,0,,"TỨ THIÊN VƯƠNG - ĐẠI SƯ KIẾM THUẬT DOMAS"\NĐường đường là hoàng tử mà lại bị chúng cướp.
Dialogue: 0,0:09:59.20,0:10:00.08,Default,,0,0,0,,"THẦY DẠY KIẾM THUẬT CỦA HOÀNG TỬ BOJJI"\NĐường đường là hoàng tử mà lại bị chúng cướp.
Dialogue: 0,0:10:00.08,0:10:02.20,Default,,0,0,0,,"THẦY DẠY KIẾM THUẬT CỦA HOÀNG TỬ BOJJI"\NMất mặt quá đi.
Dialogue: 0,0:10:02.20,0:10:04.62,Default,,0,0,0,,TỨ THIÊN VƯƠNG - KIẾM VƯƠNG APIS
Dialogue: 0,0:10:05.54,0:10:06.54,Default,,0,0,0,,TỨ THIÊN VƯƠNG - KHIÊN PHI
Dialogue: 0,0:10:06.54,0:10:07.58,Default,,0,0,0,,"TỨ THIÊN VƯƠNG - KHIÊN PHI"\NDomas.
Dialogue: 0,0:10:07.58,0:10:08.37,Default,,0,0,0,,Dạ.
Dialogue: 0,0:10:08.37,0:10:10.45,Default,,0,0,0,,Đi bắt tên cướp đó đi.
Dialogue: 0,0:10:10.45,0:10:12.37,Default,,0,0,0,,Ta phải phạt hắn tội chết.
Dialogue: 0,0:10:12.37,0:10:14.00,Default,,0,0,0,,Tuân lệnh.
Dialogue: 0,0:10:14.00,0:10:16.33,Default,,0,0,0,,Sao? Không phải vậy sao?
Dialogue: 0,0:10:16.33,0:10:18.87,Default,,0,0,0,,Con chỉ chơi một mình thôi sao?
Dialogue: 0,0:10:18.87,0:10:20.95,Default,,0,0,0,,Ở đâu có kiểu trò chơi như vậy?
Dialogue: 0,0:10:20.95,0:10:23.37,Default,,0,0,0,,Con làm tổn hại đến uy nghiêm của hoàng thất,
Dialogue: 0,0:10:23.37,0:10:26.79,Default,,0,0,0,,làm hỗn loạn trật tự của đất nước này.
Dialogue: 0,0:10:26.79,0:10:29.45,Default,,0,0,0,,Nếu vậy thì nó là tội tày trời phải xử phạt.
Dialogue: 0,0:10:31.16,0:10:33.95,Default,,0,0,0,,Nhưng lần này ta hiểu rồi.
Dialogue: 0,0:10:33.95,0:10:36.95,Default,,0,0,0,,Đứa bé này không có tư cách làm quốc vương.
Dialogue: 0,0:10:40.00,0:10:41.66,Default,,0,0,0,,Không cần phiên dịch nữa.
Dialogue: 0,0:10:42.87,0:10:46.08,Default,,0,0,0,,Daida thích hợp hơn nó hàng trăm lần.
Dialogue: 0,0:10:46.08,0:10:47.00,Default,,0,0,0,,Ơ?
Dialogue: 0,0:10:47.00,0:10:50.04,Default,,0,0,0,,Hình như nó đang bị sốc.
Dialogue: 0,0:10:50.04,0:10:51.91,Default,,0,0,0,,Không phải nó bị điếc sao?
Dialogue: 0,0:10:51.91,0:10:53.70,Default,,0,0,0,,Thần nhớ đúng là như vậy.
Dialogue: 0,0:10:54.75,0:10:55.91,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:10:57.20,0:11:01.20,Default,,0,0,0,,Sao đứa bé này lại là đại hoàng tử,\Ncòn Daida chỉ là nhị hoàng tử?
Dialogue: 0,0:11:01.20,0:11:03.54,Default,,0,0,0,,Lẽ ra phải lựa chọn dựa trên thực lực.
Dialogue: 0,0:11:03.54,0:11:06.62,Default,,0,0,0,,Quần áo ngươi xộc xệch,\Ncẩn thận không ta phạt ngươi tội chết đó!
Dialogue: 0,0:11:06.62,0:11:08.20,Default,,0,0,0,,Xin vương phi tha tội.
Dialogue: 0,0:11:08.83,0:11:11.91,Default,,0,0,0,,Bà già ngực to tâm thần đó là sao vậy?
Dialogue: 0,0:11:11.91,0:11:13.87,Default,,0,0,0,,Người như vậy mà làm vương phi?
Dialogue: 0,0:11:16.70,0:11:18.33,Default,,0,0,0,,Hoàng tử.
Dialogue: 0,0:11:18.33,0:11:20.70,Default,,0,0,0,,Quốc vương vừa triệu kiến người.
Dialogue: 0,0:11:20.70,0:11:22.91,Default,,0,0,0,,Người mau thay y phục đến yết kiến.
Dialogue: 0,0:11:56.58,0:11:58.00,Default,,0,0,0,,Tên này...
Dialogue: 0,0:11:58.91,0:12:01.25,Default,,0,0,0,,hóa ra cứ giả bộ không sao,
Dialogue: 0,0:12:01.25,0:12:03.00,Default,,0,0,0,,nghiến răng mà chịu đựng sao?
Dialogue: 0,0:12:05.16,0:12:06.37,Default,,0,0,0,,Người đâu rồi?
Dialogue: 0,0:12:06.37,0:12:07.70,Default,,0,0,0,,Hắn chạy đi đâu rồi?
Dialogue: 0,0:12:16.12,0:12:17.66,Default,,0,0,0,,你是影子一族吧
Dialogue: 0,0:12:17.66,0:12:20.33,Default,,0,0,0,,TỨ THIÊN VƯƠNG - NGƯỜI ĐUỔI RẮN BEBIN\NNgươi thuộc tộc Bóng Đêm phải không?
Dialogue: 0,0:12:20.33,0:12:23.29,Default,,0,0,0,,"THẦY DẠY KIẾM THUẬT CỦA NHỊ HOÀNG TỬ DAIDA"\NGia tộc ám sát bị nguyền rủa.
Dialogue: 0,0:12:23.29,0:12:26.25,Default,,0,0,0,,Ta nghe nói đã sớm bị diệt vong rồi mà.
Dialogue: 0,0:12:28.58,0:12:30.54,Default,,0,0,0,,Hóa ra chỉ là một đứa bé.
Dialogue: 0,0:12:37.45,0:12:38.58,Default,,0,0,0,,Vào đi.
Dialogue: 0,0:12:58.41,0:13:00.91,Default,,0,0,0,,XẾP HẠNG QUỐC VƯƠNG THỨ BẢY, QUỐC VƯƠNG BOSS
Dialogue: 0,0:13:00.91,0:13:02.66,Default,,0,0,0,,Con tới rồi.
Dialogue: 0,0:13:02.66,0:13:04.04,Default,,0,0,0,,Hoàng tử.
Dialogue: 0,0:13:10.08,0:13:12.41,Default,,0,0,0,,Mọi việc xảy ra rất đột ngột.
Dialogue: 0,0:13:13.95,0:13:18.62,Default,,0,0,0,,Dù dân làng đã chiến đấu hết mình,\Nnhưng nhiều người đã hy sinh oanh liệt.
Dialogue: 0,0:13:19.91,0:13:21.79,Default,,0,0,0,,Đó là cái gì?
Dialogue: 0,0:13:21.79,0:13:25.29,Default,,0,0,0,,Ngay khi nhìn thấy đám quỷ đông như kiến,
Dialogue: 0,0:13:25.29,0:13:28.16,Default,,0,0,0,,họ không chỉ trách than số mệnh của mình.
Dialogue: 0,0:13:32.66,0:13:36.08,Default,,0,0,0,,Không biết người đàn ông đó từ đâu xuất hiện.
Dialogue: 0,0:13:38.62,0:13:42.33,Default,,0,0,0,,Cách chiến đấu của anh\Ncó thể nói là quét sạch vạn quân.
Dialogue: 0,0:13:55.33,0:13:58.79,Default,,0,0,0,,Đây chính là khởi nguồn của vương quốc Boss.
Dialogue: 0,0:14:00.91,0:14:02.20,Default,,0,0,0,,Bojji.
Dialogue: 0,0:14:02.20,0:14:06.45,Default,,0,0,0,,Ta nghe nói gần đây con hay ở trần đi đường.
Dialogue: 0,0:14:06.45,0:14:08.62,Default,,0,0,0,,"TỂ TƯỚNG SORI"\NVậy là sao?
Dialogue: 0,0:14:08.62,0:14:12.70,Default,,0,0,0,,Hoàng tộc của chúng ta\Nlà chỗ dựa của của dân chúng.
Dialogue: 0,0:14:14.87,0:14:17.00,Default,,0,0,0,,Con gặp phải cướp sao?
Dialogue: 0,0:14:17.00,0:14:19.87,Default,,0,0,0,,Hay bị người ta ức hiếp?
Dialogue: 0,0:14:19.87,0:14:22.16,Default,,0,0,0,,Mà dù là gì thì cũng không quan trọng.
Dialogue: 0,0:14:22.16,0:14:24.95,Default,,0,0,0,,Chỉ tại con nên chuyện mới thành như vậy.
Dialogue: 0,0:14:26.87,0:14:28.12,Default,,0,0,0,,Quốc vương.
Dialogue: 0,0:14:28.12,0:14:29.58,Default,,0,0,0,,Không cần hoảng sợ.
Dialogue: 0,0:14:34.62,0:14:38.75,Default,,0,0,0,,Con là bảo bối\Nvương phi quá cố để lại cho ta,
Dialogue: 0,0:14:38.75,0:14:41.25,Default,,0,0,0,,trong mắt ta con là đứa trẻ rất đáng yêu.
Dialogue: 0,0:14:41.25,0:14:42.66,Default,,0,0,0,,Nhưng...
Dialogue: 0,0:14:42.66,0:14:48.08,Default,,0,0,0,,cứ nghĩ đến khi ta chết, ta lại thấy buồn\Nvì không biết đất nước này sẽ ra sao.
Dialogue: 0,0:14:48.08,0:14:51.20,Default,,0,0,0,,Tay con mềm yếu quá.
Dialogue: 0,0:14:51.20,0:14:54.58,Default,,0,0,0,,Tay của Daida là kết tinh của bao lần tập luyện.
Dialogue: 0,0:14:54.58,0:15:00.50,Default,,0,0,0,,Ta đã tìm Domas, đại sư kiếm thuật\Ngiỏi nhất nước để làm thầy của con.
Dialogue: 0,0:15:00.50,0:15:03.08,Default,,0,0,0,,Không thể nào con lại không mạnh lên được.
Dialogue: 0,0:15:03.08,0:15:04.20,Default,,0,0,0,,Domas.
Dialogue: 0,0:15:04.20,0:15:05.08,Default,,0,0,0,,Dạ.
Dialogue: 0,0:15:05.08,0:15:08.25,Default,,0,0,0,,Ngươi phải huấn luyện nó\Nnghiêm khắc hơn trước đây nữa.
Dialogue: 0,0:15:08.25,0:15:09.25,Default,,0,0,0,,Dạ.
Dialogue: 0,0:15:09.95,0:15:12.95,Default,,0,0,0,,Con à, con phải chăm chỉ tập luyện.
Dialogue: 0,0:15:14.20,0:15:15.62,Default,,0,0,0,,Đi đi.
Dialogue: 0,0:15:23.70,0:15:25.33,Default,,0,0,0,,Ngươi làm theo lệnh của ai
Dialogue: 0,0:15:25.33,0:15:27.33,Default,,0,0,0,,và tới để giết ai?
Dialogue: 0,0:15:28.29,0:15:29.54,Default,,0,0,0,,Nếu ngươi không trả lời...
Dialogue: 0,0:15:29.54,0:15:31.08,Default,,0,0,0,,Lúc nãy chẳng phải tôi nói rồi sao?
Dialogue: 0,0:15:31.08,0:15:33.16,Default,,0,0,0,,Tôi không giết người...
Dialogue: 0,0:15:34.62,0:15:35.95,Default,,0,0,0,,Đau chết đi được.
Dialogue: 0,0:15:35.95,0:15:40.00,Default,,0,0,0,,Gia tộc Bóng Đêm chuyên ám sát để mưu sinh,
Dialogue: 0,0:15:40.00,0:15:43.91,Default,,0,0,0,,vốn là nhóm sát thủ của vương quốc Bo.
Dialogue: 0,0:15:43.91,0:15:46.83,Default,,0,0,0,,Một khi chúng đã chọn quân chủ\Nthì tuyệt đối không phản bội.
Dialogue: 0,0:15:46.83,0:15:48.45,Default,,0,0,0,,Đừng nói nữa!
Dialogue: 0,0:15:48.45,0:15:52.41,Default,,0,0,0,,Vậy mà đột nhiên chúng lại\Nmưu đồ sát hại quốc vương
Dialogue: 0,0:15:52.41,0:15:55.62,Default,,0,0,0,,khiến cả gia tộc bị diệt vong.
Dialogue: 0,0:15:57.08,0:15:58.00,Default,,0,0,0,,Còn không mau...
Dialogue: 0,0:16:07.12,0:16:09.08,Default,,0,0,0,,Trốn vào bóng rồi sao?
Dialogue: 0,0:16:11.00,0:16:13.08,Default,,0,0,0,,Tăng cường cảnh giác.
Dialogue: 0,0:16:13.08,0:16:15.91,Default,,0,0,0,,Tuy nhiên nó chẳng làm gì được nữa đâu.
Dialogue: 0,0:16:41.66,0:16:43.29,Default,,0,0,0,,Đúng là thô bạo.
Dialogue: 0,0:16:45.33,0:16:47.58,Default,,0,0,0,,Hóa ra là Daida điện hạ.
Dialogue: 0,0:16:47.58,0:16:50.04,Default,,0,0,0,,"NHỊ HOÀNG TỬ DAIDA"\NHoàng huynh thế nào rồi?
Dialogue: 0,0:16:50.04,0:16:52.83,Default,,0,0,0,,Có tiến triển gì chưa?
Dialogue: 0,0:16:52.83,0:16:55.58,Default,,0,0,0,,Ta muốn tỉ thí với huynh ấy một chút.
Dialogue: 0,0:16:56.66,0:16:59.50,Default,,0,0,0,,Như vậy hơi vội vàng.
Dialogue: 0,0:16:59.50,0:17:02.58,Default,,0,0,0,,Hay ngài làm đối thủ của ta đi.
Dialogue: 0,0:17:02.58,0:17:04.04,Default,,0,0,0,,Tôi sao?
Dialogue: 0,0:17:04.04,0:17:05.12,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:17:05.12,0:17:07.16,Default,,0,0,0,,Đấu với ngài thì không sao chứ?
Dialogue: 0,0:17:07.16,0:17:09.41,Default,,0,0,0,,Vâng... nhưng...
Dialogue: 0,0:17:09.41,0:17:13.91,Default,,0,0,0,,Nghe nói cậu ta khiến đội trưởng hàng đầu\Nđoàn kỵ sĩ Bebin phải gục xuống đất.
Dialogue: 0,0:17:13.91,0:17:16.20,Default,,0,0,0,,Cũng khó trách tự đắc như vậy.
Dialogue: 0,0:17:16.20,0:17:18.87,Default,,0,0,0,,Dù tôi không muốn lắm, nhưng tôi hiểu rồi.
Dialogue: 0,0:17:22.04,0:17:25.12,Default,,0,0,0,,Cho cậu ta nhụt chí một phen.
Dialogue: 0,0:17:32.54,0:17:34.83,Default,,0,0,0,,Thần thái này...
Dialogue: 0,0:17:34.83,0:17:36.83,Default,,0,0,0,,giống hệt quốc vương Boss.
Dialogue: 0,0:17:47.87,0:17:49.41,Default,,0,0,0,,Xuất sắc quá.
Dialogue: 0,0:17:52.79,0:17:54.12,Default,,0,0,0,,Chiêu này thì sao?
Dialogue: 0,0:17:54.12,0:17:55.25,Default,,0,0,0,,Lên đi.
Dialogue: 0,0:18:20.58,0:18:22.50,Default,,0,0,0,,Kiếm thuật của người vô cùng lợi hại.
Dialogue: 0,0:18:30.87,0:18:32.95,Default,,0,0,0,,Vị điện hạ này\Nnhất định sẽ còn trở nên mạnh hơn.
Dialogue: 0,0:18:32.95,0:18:35.12,Default,,0,0,0,,Đây mới là kiếm thuật của vua.
Dialogue: 0,0:18:35.12,0:18:37.45,Default,,0,0,0,,Muốn truyền dạy kiếm thuật của mình\Ncho cậu ấy quá.
Dialogue: 0,0:18:44.20,0:18:45.54,Default,,0,0,0,,Điện hạ Bojji.
Dialogue: 0,0:18:47.04,0:18:48.54,Default,,0,0,0,,Gì vậy?
Dialogue: 0,0:18:48.54,0:18:50.33,Default,,0,0,0,,Huynh muốn khoa tay múa chân với ta?
Dialogue: 0,0:18:55.08,0:18:56.58,Default,,0,0,0,,Chịu hết nổi rồi.
Dialogue: 0,0:18:56.58,0:18:59.91,Default,,0,0,0,,Đi theo cậu ta\Nmà rốt cuộc phải chịu khổ thế này.
Dialogue: 0,0:18:59.91,0:19:01.70,Default,,0,0,0,,Phải mau rời khỏi nơi đáng sợ này...
Dialogue: 0,0:19:01.70,0:19:03.20,Default,,0,0,0,,Nghe tin gì chưa?
Dialogue: 0,0:19:03.20,0:19:06.04,Default,,0,0,0,,Hình như điện hạ Bojji\Nđang tỉ thí với điện hạ Daida.
Dialogue: 0,0:19:06.04,0:19:07.70,Default,,0,0,0,,Mau đi xem đi.
Dialogue: 0,0:19:07.70,0:19:09.79,Default,,0,0,0,,Cậu ta định tỉ thí sao?
Dialogue: 0,0:19:12.04,0:19:15.04,Default,,0,0,0,,Ồn ào quá. Xảy ra chuyện gì vậy?
Dialogue: 0,0:19:15.04,0:19:18.04,Default,,0,0,0,,Điện hạ Daida và điện hạ Bojji\Nhình như sắp tỉ thí.
Dialogue: 0,0:19:19.00,0:19:21.66,Default,,0,0,0,,Huynh đệ tương tàn đúng là ngu ngốc.
Dialogue: 0,0:19:29.12,0:19:32.08,Default,,0,0,0,,Điện hạ Bojji nhất định\Nkhông thể thắng nổi điện hạ Daida.
Dialogue: 0,0:19:32.08,0:19:34.08,Default,,0,0,0,,Rốt cuộc cậu ấy đang nghĩ gì vậy?
Dialogue: 0,0:19:34.70,0:19:36.41,Default,,0,0,0,,Anh nghĩ ai sẽ thắng?
Dialogue: 0,0:19:36.41,0:19:38.33,Default,,0,0,0,,Còn phải hỏi sao?
Dialogue: 0,0:19:38.33,0:19:42.04,Default,,0,0,0,,Điện hạ Daida đã đánh bại ngài Bohun,\Nđội trưởng số một đó.
Dialogue: 0,0:19:42.04,0:19:45.12,Default,,0,0,0,,Ngài Bohun vì chuyện đó\Nmà từ chức khỏi đội kỵ sĩ.
Dialogue: 0,0:19:45.12,0:19:46.95,Default,,0,0,0,,Phải đó.
Dialogue: 0,0:19:46.95,0:19:48.58,Default,,0,0,0,,Nhưng lúc đó...
Dialogue: 0,0:19:58.04,0:20:01.16,Default,,0,0,0,,Có lẽ sẽ biết được chân tướng sau cuộc đấu này.
Dialogue: 0,0:20:01.16,0:20:03.45,Default,,0,0,0,,Cuộc đấu sắp bắt đầu rồi.
Dialogue: 0,0:20:04.25,0:20:05.95,Default,,0,0,0,,Hai bên đã chuẩn bị xong chưa?
Dialogue: 0,0:20:14.70,0:20:19.12,Default,,0,0,0,,Đệ tử của Domas và đệ tử của ngài\Nhình như sắp tỉ thí.
Dialogue: 0,0:20:20.62,0:20:23.37,Default,,0,0,0,,Kết quả đã rõ ràng rồi.
Dialogue: 0,0:20:23.37,0:20:25.87,Default,,0,0,0,,Hoàng huynh, ta sẽ không nương tay đâu.
Dialogue: 0,0:20:30.37,0:20:31.45,Default,,0,0,0,,Bắt đầu.
Dialogue: 0,0:20:43.04,0:20:44.29,Default,,0,0,0,,Quả nhiên không sai.
Dialogue: 0,0:20:44.29,0:20:45.66,Default,,0,0,0,,Đó không phải vô tình.
Dialogue: 0,0:20:53.12,0:20:55.00,Default,,0,0,0,,Chiêu lúc đó...
Dialogue: 0,0:20:57.54,0:20:58.79,Default,,0,0,0,,Đáng ghét.
Dialogue: 0,0:21:10.83,0:21:11.79,Default,,0,0,0,,Trúng rồi.
Dialogue: 0,0:21:11.79,0:21:13.41,Default,,0,0,0,,Vừa tránh được lại còn đánh trúng.
Dialogue: 0,0:21:14.04,0:21:15.45,Default,,0,0,0,,Lợi hại quá.
Dialogue: 0,0:21:16.20,0:21:17.79,Default,,0,0,0,,Cậu thật sự lợi hại,
Dialogue: 0,0:21:17.79,0:21:19.08,Default,,0,0,0,,Bojji!
