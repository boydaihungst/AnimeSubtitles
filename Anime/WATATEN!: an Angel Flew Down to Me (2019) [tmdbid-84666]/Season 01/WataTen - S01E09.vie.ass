Dialogue: 0,0:02:00.55,0:02:03.76,sign_3038_17_Episode_5__Don_t,title,0,0,0,,{\fad(526,1)}Tập 9: Làm ơn hãy ở lại cho tới khi em ngủ
Dialogue: 0,0:02:22.57,0:02:24.57,main,Hinata,0,0,0,,Noa! Xin lỗi vì bắt cậu chờ!
Dialogue: 0,0:02:24.57,0:02:26.05,main,Noa,0,0,0,,Hinata-chan!
Dialogue: 0,0:02:27.66,0:02:29.60,main,Hinata,0,0,0,,Bộ đồ hôm nay của cậu dễ thương quá!
Dialogue: 0,0:02:30.25,0:02:32.54,main,Noa,0,0,0,,C-Cảm ơn.
Dialogue: 0,0:02:33.64,0:02:34.63,main,Hinata,0,0,0,,
Dialogue: 0,0:02:34.63,0:02:36.84,main,Hinata,0,0,0,,Không lẽ hôm nay Noa cảm thấy không khoẻ sao?
Dialogue: 0,0:02:36.84,0:02:38.43,main,Hinata,0,0,0,,Hay là chúng mình không đi nữa nhé?
Dialogue: 0,0:02:38.43,0:02:42.88,main,Noa,0,0,0,,Eh? Không có chuyện đó đâu! Nhìn nè, tớ khoẻ mà! Khoẻ mà!
Dialogue: 0,0:02:43.19,0:02:44.45,main,Hinata,0,0,0,,Vậy đi nào!
Dialogue: 0,0:02:44.45,0:02:46.33,main,Noa,0,0,0,,Ừ! Đi thôi đi thôi!
Dialogue: 0,0:02:47.94,0:02:50.55,main,Hinata,0,0,0,,Nói mới nhớ, hôm nay chúng ta xem gì vậy?
Dialogue: 0,0:02:50.55,0:02:52.84,main,Noa,0,0,0,,Cứ đến đó rồi chọn sau mà.
Dialogue: 0,0:02:52.84,0:02:55.37,main,Noa,0,0,0,,Cậu muốn xem gì vậy, Hinata-chan?
Dialogue: 0,0:02:55.37,0:02:56.98,main,Hinata,0,0,0,,Để xem nào...
Dialogue: 0,0:02:56.98,0:02:58.48,main,Hinata,0,0,0,,{\i1}White Lily{\i0}!
Dialogue: 0,0:02:58.48,0:03:00.71,main,Hinata,0,0,0,,Mya-nee rất thích cái đó đó!
Dialogue: 0,0:03:00.71,0:03:02.86,main,Noa,0,0,0,,Mya-san đã lớn rồi mà nhỉ...
Dialogue: 0,0:03:02.86,0:03:04.53,main,Noa,0,0,0,,Mặc dù vậy Mya-san vẫn thích nó sao?
Dialogue: 0,0:03:04.81,0:03:07.36,main,Hinata,0,0,0,,Vậy nên tớ sẽ xem và kể lại cho chị ấy!
Dialogue: 0,0:03:07.36,0:03:09.57,main,Noa,0,0,0,,Chị ấy sẽ buồn lắm đó.
Dialogue: 0,0:03:09.58,0:03:12.33,sign_4546_38_Favored_to_win_a,text; white,0,0,0,,Bộ phim được bình chọn cho giải phim của năm!\N{\fs33}Thiên thần Halo
Dialogue: 0,0:03:09.58,0:03:12.33,sign_4546_39_Missing__White_L,text; pink,0,0,0,,Phim ngắn\N{\fs39\c&HF5F3F4&\3c&H7846E5&}White Lily
Dialogue: 0,0:03:12.81,0:03:15.08,main,Noa,0,0,0,,Bộ phim sẽ bắt đầu lúc 1 giờ.
Dialogue: 0,0:03:15.59,0:03:17.26,main,Hinata,0,0,0,,Vậy là chúng ta rảnh một lúc ha.
Dialogue: 0,0:03:17.26,0:03:19.35,main,Hinata,0,0,0,,Muốn đi ăn trưa không?
Dialogue: 0,0:03:19.35,0:03:20.26,main,Noa,0,0,0,,
Dialogue: 0,0:03:20.70,0:03:24.20,main,Noa,0,0,0,,T-Tớ lỡ đem hơi nhiều đồ ăn nên là...
Dialogue: 0,0:03:24.20,0:03:25.35,main,Noa,0,0,0,,Cậu ăn cùng nhé?
Dialogue: 0,0:03:25.35,0:03:27.10,main,Hinata,0,0,0,,Cậu tự làm à?
Dialogue: 0,0:03:27.10,0:03:29.46,main,Hinata,0,0,0,,Tuyệt thật ha! Ăn chứ! Ăn chứ!
Dialogue: 0,0:03:31.71,0:03:34.30,main,Noa,0,0,0,,Chỉ là sandwiche thôi...
Dialogue: 0,0:03:34.93,0:03:36.04,main,Noa,0,0,0,,
Dialogue: 0,0:03:36.27,0:03:37.62,main,Noa,0,0,0,,Tại sao chứ...
Dialogue: 0,0:03:39.30,0:03:40.93,italics,Noa,0,0,0,,Mình thật ngốc mà!
Dialogue: 0,0:03:41.37,0:03:44.94,main,Noa,0,0,0,,C-Chắc là thứ này không ăn được nữa nhỉ.
Dialogue: 0,0:03:44.94,0:03:47.16,main,Noa,0,0,0,,Quả nhiên chúng ta nên mua gì đó để ăn...
Dialogue: 0,0:03:47.80,0:03:51.16,main,Hinata,0,0,0,,Ngon quá! Cho tớ một cái nữa nhé?
Dialogue: 0,0:03:51.50,0:03:55.33,main,Noa,0,0,0,,Mồ, Hinata-chan! Đừng làm vậy mà...
Dialogue: 0,0:03:55.33,0:03:56.13,main,Hinata,0,0,0,,
Dialogue: 0,0:03:56.70,0:03:59.84,main,Hinata,0,0,0,,Cảm ơn vì bữa ăn! Chắc làm cái này mất công lắm nhỉ.
Dialogue: 0,0:03:59.84,0:04:02.36,main,Noa,0,0,0,,Không hề.
Dialogue: 0,0:04:02.36,0:04:04.02,main,Noa,0,0,0,,Dễ ợt ấy mà.
Dialogue: 0,0:04:04.02,0:04:04.96,main,Hinata,0,0,0,,Thật chứ?
Dialogue: 0,0:04:05.34,0:04:07.15,main,Hinata,0,0,0,,Cậu tuyệt thật đó, Noa!
Dialogue: 0,0:04:07.15,0:04:09.67,italics,Noa,0,0,0,,Thật ra mình đã rất khó khăn để làm nó.
Dialogue: 0,0:04:18.09,0:04:20.23,flashback,Noa,0,0,0,,Mình sẽ bị muộn mất!
Dialogue: 0,0:04:21.14,0:04:23.49,italics,Noa,0,0,0,,Nó thật sự rất khó nhưng mà...
Dialogue: 0,0:04:23.85,0:04:26.44,main,Hinata,0,0,0,,Ngon thật đó!
Dialogue: 0,0:04:28.28,0:04:30.17,main,Hinata,0,0,0,,Bọn mình nên trở lại vào trong thôi nhỉ?
Dialogue: 0,0:04:30.17,0:04:31.41,main,Noa,0,0,0,,Đúng vậy ha!
Dialogue: 0,0:04:33.61,0:04:35.69,main,Hinata,0,0,0,,Góc nhìn này tốt thật đó.
Dialogue: 0,0:04:35.69,0:04:36.55,main,Noa,0,0,0,,
Dialogue: 0,0:04:37.57,0:04:41.30,main,Noa,0,0,0,,Họ đưa bọn mình cái đồ chơi phát sáng này để làm gì chứ?
Dialogue: 0,0:04:42.47,0:04:44.29,main,Hinata,0,0,0,,Bắt đầu rồi kìa!
Dialogue: 0,0:04:44.29,0:04:45.11,main,Noa,0,0,0,,
Dialogue: 0,0:04:53.48,0:04:55.34,italics,mascot,0,0,0,,Lily! Cẩn thận!
Dialogue: 0,0:05:01.09,0:05:03.95,italics,Noa,0,0,0,,Sáng nay mình dậy sớm nên buồn ngủ quá.
Dialogue: 0,0:05:03.59,0:05:05.63,italicstop,Lily,0,0,0,,Tại sao đòn tấn công lại không phát huy tác dụng chứ?
Dialogue: 0,0:05:10.72,0:05:12.05,main,Hinata and others,0,0,0,,Cậu làm được mà!
Dialogue: 0,0:05:12.05,0:05:14.87,italicstop,Lily,0,0,0,,Mọi người! White Lily cần sự giúp đỡ của mọi người!
Dialogue: 0,0:05:12.63,0:05:16.12,main,Hinata,0,0,0,,Cố lên! Tiến lên nào!
Dialogue: 0,0:05:12.82,0:05:16.53,main,Noa,0,0,0,,Mình ngủ từ lúc nào vậy chứ?
Dialogue: 0,0:05:16.12,0:05:19.31,top,Hinata,0,0,0,,Cố lên! Cố lên! Tiến lên nào!
Dialogue: 0,0:05:16.87,0:05:18.63,main,Noa,0,0,0,,Hơn nữa sao lại ồn ào vậy chứ?
Dialogue: 0,0:05:19.31,0:05:21.58,main,Hinata,0,0,0,,CỐ LÊN NÀO!
Dialogue: 0,0:05:21.18,0:05:24.45,italicstop,Lily,0,0,0,,Mọi người, hãy cho tôi mượn sức mạnh!
Dialogue: 0,0:05:21.58,0:05:25.11,main,Hinata,0,0,0,,Tiến lên! Cái thân! Đánh vào thân nó ấy!
Dialogue: 0,0:05:24.45,0:05:27.03,italicstop,Lily,0,0,0,,Sức mạnh...Lily!
Dialogue: 0,0:05:24.89,0:05:26.14,main,Noa,0,0,0,,Ghê vậy...
Dialogue: 0,0:05:25.11,0:05:29.09,main,Hinata,0,0,0,,Đúng rồi! Đúng vậy đó! Tiến lên!
Dialogue: 0,0:05:30.80,0:05:32.79,main,Hinata,0,0,0,,Bộ phim tuyệt thật đó!
Dialogue: 0,0:05:32.79,0:05:34.55,main,Noa,0,0,0,,Ừm! Tuyệt thật ha...
Dialogue: 0,0:05:35.02,0:05:36.51,italics,Noa,0,0,0,,Hinata-chan...
Dialogue: 0,0:05:36.90,0:05:39.38,main,Noa,0,0,0,,Vậy giờ, bọn mình đi đâu tiếp giờ?
Dialogue: 0,0:05:39.38,0:05:41.28,main,Hinata,0,0,0,,Đúng rồi nhỉ, hơn nữa...
Dialogue: 0,0:05:41.28,0:05:43.21,main,Hinata,0,0,0,,Tớ thấy khát quá.
Dialogue: 0,0:05:43.21,0:05:44.73,main,Noa,0,0,0,,Đương nhiên rồi.
Dialogue: 0,0:05:49.27,0:05:52.00,main,Hinata,0,0,0,,Noa muốn đi đâu nữa không?
Dialogue: 0,0:05:52.00,0:05:55.41,main,Noa,0,0,0,,Nếu Hinata-chan không để ý, tớ muốn đi mua sắm.
Dialogue: 0,0:05:55.41,0:05:57.91,main,Noa,0,0,0,,Quần áo nè, mấy đồ trang trí nè...
Dialogue: 0,0:05:57.91,0:05:59.55,main,Hinata,0,0,0,,Ừ! Được thôi!
Dialogue: 0,0:06:01.41,0:06:02.85,main,Noa,0,0,0,,Cái này dễ thương quá!
Dialogue: 0,0:06:07.40,0:06:08.54,main,Hinata,0,0,0,,Cậu sẽ mua nó à?
Dialogue: 0,0:06:08.54,0:06:12.04,main,Noa,0,0,0,,Tớ không có đủ tiền nên là có lẽ để đợt sau vậy!
Dialogue: 0,0:06:12.04,0:06:14.39,main,Hinata,0,0,0,,Sự kiên nhẫn khiến phụ nữ trở nên quyến rũ đúng không?
Dialogue: 0,0:06:14.39,0:06:16.03,main,Noa,0,0,0,,Không phải.
Dialogue: 0,0:06:16.66,0:06:17.49,main,Noa,0,0,0,,Đi thôi.
Dialogue: 0,0:06:17.49,0:06:18.65,main,Hinata,0,0,0,,Thật à?
Dialogue: 0,0:06:18.65,0:06:19.41,main,Noa,0,0,0,,
Dialogue: 0,0:06:23.87,0:06:25.13,main,Hinata,0,0,0,,Sao vậy?
Dialogue: 0,0:06:26.33,0:06:28.41,main,Hinata,0,0,0,,Higero này.
Dialogue: 0,0:06:28.41,0:06:32.94,main,Noa,0,0,0,,Có lẽ thứ này đã trở nên nổi tiếng lúc nào đó mà tớ không biết chăng?
Dialogue: 0,0:06:32.94,0:06:37.04,main,Hinata,0,0,0,,Không hẳn nhưng mà có lẽ có một số người thật sự yêu quý thứ này đó.
Dialogue: 0,0:06:37.04,0:06:39.79,main,Noa,0,0,0,,Ah... Như Hana-chan chẳng hạn.
Dialogue: 0,0:06:40.85,0:06:43.31,main,Hinata,0,0,0,,Tớ sẽ mua một cái làm quà cho Hana.
Dialogue: 0,0:06:43.78,0:06:45.17,main,Noa,0,0,0,,Vậy ư...
Dialogue: 0,0:06:45.17,0:06:48.21,main,Hinata,0,0,0,,Không lẽ Noa cũng muốn?
Dialogue: 0,0:06:48.47,0:06:49.71,main,Noa,0,0,0,,Chắc chắn là không rồi.
Dialogue: 0,0:06:49.71,0:06:54.17,main,Hinata,0,0,0,,Ra vậy, vậy trong lúc tớ đi thanh toán cậu cứ đi xem hàng đi nhé.
Dialogue: 0,0:06:54.17,0:06:57.54,main,Noa,0,0,0,,Ừ! Vậy tớ sẽ đi sang bên này.
Dialogue: 0,0:06:57.54,0:06:58.57,main,Hinata,0,0,0,,
Dialogue: 0,0:07:05.45,0:07:08.27,italics,Noa,0,0,0,,Một món quà từ Hinata-chan à?
Dialogue: 0,0:07:09.75,0:07:11.66,main,Hinata,0,0,0,,Xin lỗi vì bắt cậu chờ, Noa!
Dialogue: 0,0:07:11.66,0:07:13.03,main,Noa,0,0,0,,Cậu về rồi à.
Dialogue: 0,0:07:13.39,0:07:14.49,main,Hinata,0,0,0,,Đây! Của cậu!
Dialogue: 0,0:07:14.87,0:07:15.93,main,Noa,0,0,0,,Gì vậy?
Dialogue: 0,0:07:15.93,0:07:18.20,main,Hinata,0,0,0,,Để cảm ơn cho sandwiche và bộ phim.
Dialogue: 0,0:07:18.20,0:07:19.84,main,Noa,0,0,0,,Tớ mở nó nhé?
Dialogue: 0,0:07:19.84,0:07:23.24,main,Hinata,0,0,0,,Đó là thứ mà Noa vừa nãy định mua đó.
Dialogue: 0,0:07:23.24,0:07:25.07,main,Noa,0,0,0,,Không lẽ đó là...
Dialogue: 0,0:07:28.02,0:07:30.48,main,Noa,0,0,0,,Wow... Hạnh phúc quá.
Dialogue: 0,0:07:30.48,0:07:32.68,main,Hinata,0,0,0,,Cái đó là của Hana!
Dialogue: 0,0:07:33.02,0:07:34.45,main,Hinata,0,0,0,,Của Noa đây cơ.
Dialogue: 0,0:07:40.25,0:07:41.82,main,Hinata,0,0,0,,Sao vậy?
Dialogue: 0,0:07:41.82,0:07:43.44,main,Hinata,0,0,0,,Không lẽ tớ mua nhầm à?
Dialogue: 0,0:07:43.44,0:07:45.61,main,Hinata,0,0,0,,Vậy để tớ đem đi đổi nhé?
Dialogue: 0,0:07:45.61,0:07:47.61,main,Noa,0,0,0,,Không, tớ thích cái này lắm.
Dialogue: 0,0:07:48.14,0:07:50.06,main,Noa,0,0,0,,Cảm ơn cậu, Hinata-chan!
Dialogue: 0,0:07:50.06,0:07:51.81,main,Noa,0,0,0,,Tớ siêu hạnh phúc luôn!
Dialogue: 0,0:07:51.81,0:07:54.03,main,Hinata,0,0,0,,Ra vậy! Ơn Trời là cậu thích!
Dialogue: 0,0:07:55.78,0:07:57.95,main,Noa,0,0,0,,Nè... dễ thương không?
Dialogue: 0,0:07:57.95,0:07:59.94,main,Hinata,0,0,0,,Dễ thương lắm!
Dialogue: 0,0:08:01.15,0:08:02.44,main,Noa,0,0,0,,Cảm ơn cậu!
