Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:01:42.24,0:01:46.79,Default,,0,0,0,,[Đại Lý Tự Thiếu Khanh Du]
Dialogue: 0,0:01:47.47,0:01:49.99,Default,,0,0,0,,[Tập 14]
Dialogue: 0,0:01:50.52,0:01:53.56,Default,,0,0,0,,[Đại Lý Tự]
Dialogue: 0,0:01:56.77,0:02:03.26,Default,,0,0,0,,[Thanh Thận Cần]
Dialogue: 0,0:02:00.86,0:02:02.62,Default,,0,0,0,,Thượng Quan thiếu khanh một tiếng.
Dialogue: 0,0:02:02.62,0:02:03.48,Default,,0,0,0,,Lý thiếu khanh.
Dialogue: 0,0:02:04.82,0:02:05.62,Default,,0,0,0,,Vừa hay ta cần tìm ngài
Dialogue: 0,0:02:05.62,0:02:06.68,Default,,0,0,0,,nói về chuyện vụ án.
Dialogue: 0,0:02:06.94,0:02:08.22,Default,,0,0,0,,Ta đã xem hồ sơ vụ án
Dialogue: 0,0:02:08.26,0:02:09.26,Default,,0,0,0,,Thôi Bội đưa cho ta rồi,
Dialogue: 0,0:02:09.26,0:02:10.72,Default,,0,0,0,,cũng đã nắm được tình hình.
Dialogue: 0,0:02:11.06,0:02:12.22,Default,,0,0,0,,Chỉ là vụ án lần này
Dialogue: 0,0:02:12.66,0:02:14.26,Default,,0,0,0,,Kim Ngô vệ lại phải nhúng tay.
Dialogue: 0,0:02:15.06,0:02:15.62,Default,,0,0,0,,Tại sao?
Dialogue: 0,0:02:15.90,0:02:20.74,Default,,0,0,0,,[Thanh Thận Cần]
Dialogue: 0,0:02:16.58,0:02:17.43,Default,,0,0,0,,Lần này thực sự không tính là
Dialogue: 0,0:02:17.43,0:02:18.69,Default,,0,0,0,,họ cản trở từ bên trong.
Dialogue: 0,0:02:19.98,0:02:21.02,Default,,0,0,0,,Bởi việc thủy vận của kinh đô
Dialogue: 0,0:02:21.02,0:02:22.42,Default,,0,0,0,,cũng thuộc quyền cai quản của họ.
Dialogue: 0,0:02:22.42,0:02:23.57,Default,,0,0,0,,Liên tiếp có người chết,
Dialogue: 0,0:02:23.57,0:02:25.03,Default,,0,0,0,,lòng người ở bến đò hoang mang.
Dialogue: 0,0:02:25.03,0:02:25.76,Default,,0,0,0,,Bọn họ hỏi tới
Dialogue: 0,0:02:25.86,0:02:27.46,Default,,0,0,0,,cũng không phải là vượt quá quyền hạn.
Dialogue: 0,0:02:27.46,0:02:28.55,Default,,0,0,0,,Vụ án này Đại Lý Tự
Dialogue: 0,0:02:28.58,0:02:29.43,Default,,0,0,0,,tiếp nhận từ tay Hình bộ
Dialogue: 0,0:02:29.43,0:02:31.16,Default,,0,0,0,,một cách danh chính ngôn thuận.
Dialogue: 0,0:02:31.46,0:02:32.07,Default,,0,0,0,,Dù ra sao
Dialogue: 0,0:02:32.42,0:02:34.68,Default,,0,0,0,,cũng không thể để Kim Ngô vệ nhúng tay vào.
Dialogue: 0,0:02:34.78,0:02:36.84,Default,,0,0,0,,Vậy nếu Hình bộ không gánh nổi thì sao?
Dialogue: 0,0:02:41.31,0:02:41.92,Default,,0,0,0,,Như này đi,
Dialogue: 0,0:02:42.42,0:02:44.29,Default,,0,0,0,,nếu Lý thiếu khanh đã quyết,
Dialogue: 0,0:02:44.42,0:02:45.98,Default,,0,0,0,,vậy bất luận giá nào Đại Lý Tự chúng ta
Dialogue: 0,0:02:45.98,0:02:47.80,Default,,0,0,0,,sẽ cùng thống nhất ứng phó với bên ngoài.
Dialogue: 0,0:02:47.80,0:02:49.18,Default,,0,0,0,,Nếu Khưu Khánh Chi hỏi tới
Dialogue: 0,0:02:49.18,0:02:50.70,Default,,0,0,0,,ta và ngài cùng thoái thác\Ntrách nhiệm cho nhau,
Dialogue: 0,0:02:50.70,0:02:51.63,Default,,0,0,0,,cứ ứng phó trước.
Dialogue: 0,0:02:52.06,0:02:52.98,Default,,0,0,0,,Việc phá các vụ án ly kỳ
Dialogue: 0,0:02:52.98,0:02:54.91,Default,,0,0,0,,có thể ta không bằng Lý thiếu khanh.
Dialogue: 0,0:02:55.30,0:02:56.22,Default,,0,0,0,,Nhưng việc giao thiệp
Dialogue: 0,0:02:56.22,0:02:57.57,Default,,0,0,0,,với những người này ở kinh đô
Dialogue: 0,0:02:57.57,0:02:59.63,Default,,0,0,0,,e là Lý thiếu khanh cũng không bằng ta.
Dialogue: 0,0:03:00.30,0:03:00.87,Default,,0,0,0,,Đa tạ.
Dialogue: 0,0:03:03.46,0:03:04.54,Default,,0,0,0,,Thượng Quan thiếu khanh quả là
Dialogue: 0,0:03:04.54,0:03:05.70,Default,,0,0,0,,đâm bị thóc thọc bị gạo.
Dialogue: 0,0:03:04.97,0:03:13.03,Default,,0,0,0,,[Thanh Thận Cần]
Dialogue: 0,0:03:09.54,0:03:10.86,Default,,0,0,0,,Lần này Minh Kính Đường
Dialogue: 0,0:03:10.91,0:03:12.14,Default,,0,0,0,,phải nhanh chóng phá án.
Dialogue: 0,0:03:12.14,0:03:13.20,Default,,0,0,0,,Để lâu ắt sinh biến.
Dialogue: 0,0:03:13.55,0:03:14.54,Default,,0,0,0,,Bất luận thế nào
Dialogue: 0,0:03:14.73,0:03:15.58,Default,,0,0,0,,lần này Đại Lý Tự
Dialogue: 0,0:03:15.58,0:03:17.44,Default,,0,0,0,,phải ra oai phủ đầu Khưu Khánh Chi.
Dialogue: 0,0:03:18.83,0:03:20.42,Default,,0,0,0,,Phiền Thượng Quan thiếu khanh rồi.
Dialogue: 0,0:03:20.42,0:03:21.10,Default,,0,0,0,,Cáo từ.
Dialogue: 0,0:03:27.38,0:03:30.83,Default,,0,0,0,,[Thanh Thận Cần]
Dialogue: 0,0:03:34.42,0:03:35.94,Default,,0,0,0,,Sao ta cảm thấy Thượng Quan thiếu khanh
Dialogue: 0,0:03:35.94,0:03:36.94,Default,,0,0,0,,khác khác nhỉ?
Dialogue: 0,0:03:38.03,0:03:39.54,Default,,0,0,0,,Cảm giác Thượng Quan thiếu khanh
Dialogue: 0,0:03:39.54,0:03:41.02,Default,,0,0,0,,đang nhảy ấy.
Dialogue: 0,0:03:41.14,0:03:42.80,Default,,0,0,0,,Xem ra Thượng Quan thiếu khanh
Dialogue: 0,0:03:42.82,0:03:44.22,Default,,0,0,0,,không những thích nghe tiếng vang
Dialogue: 0,0:03:44.22,0:03:46.08,Default,,0,0,0,,mà còn thích đối đầu với Kim Ngô vệ.
Dialogue: 0,0:03:46.82,0:03:48.06,Default,,0,0,0,,Cho nên Thượng Quan thiếu khanh
Dialogue: 0,0:03:48.06,0:03:49.90,Default,,0,0,0,,thích nhất là...
Dialogue: 0,0:03:50.70,0:03:51.95,Default,,0,0,0,,Khưu Khánh Chi to gan,
Dialogue: 0,0:03:52.14,0:03:53.27,Default,,0,0,0,,ngươi biết tội chưa?
Dialogue: 0,0:03:53.54,0:03:54.07,Default,,0,0,0,,Ta… ta...
Dialogue: 0,0:04:00.10,0:04:00.90,Default,,0,0,0,,biết tội.
Dialogue: 0,0:04:11.44,0:04:12.84,Default,,0,0,0,,Điều tra vụ án như nào rồi?
Dialogue: 0,0:04:20.56,0:04:21.18,Default,,0,0,0,,Bẩm đại nhân,
Dialogue: 0,0:04:21.18,0:04:22.78,Default,,0,0,0,,mấy người bọn ta đã kiểm tra thử
Dialogue: 0,0:04:22.78,0:04:24.63,Default,,0,0,0,,các tiệm cầm đồ, kho hàng quanh bãi hàng,
Dialogue: 0,0:04:24.63,0:04:25.18,Default,,0,0,0,,nhưng
Dialogue: 0,0:04:25.26,0:04:26.95,Default,,0,0,0,,có quá nhiều con đường có thể phi tang,
Dialogue: 0,0:04:26.95,0:04:28.34,Default,,0,0,0,,tạm thời vẫn chưa tra ra được gì.
Dialogue: 0,0:04:28.34,0:04:29.34,Default,,0,0,0,,Bọn ta đành phải nhờ các đồng liêu ti trực
Dialogue: 0,0:04:29.34,0:04:30.20,Default,,0,0,0,,ở trong Đại Lý Tự
Dialogue: 0,0:04:30.30,0:04:32.06,Default,,0,0,0,,báo giúp những tiệm cầm đồ ở quanh đó.
Dialogue: 0,0:04:32.06,0:04:33.70,Default,,0,0,0,,Nếu phát hiện người chèo thuyền nào cầm đồ
Dialogue: 0,0:04:33.70,0:04:34.96,Default,,0,0,0,,hoặc người nào khả nghi
Dialogue: 0,0:04:35.06,0:04:36.04,Default,,0,0,0,,phải để tâm.
Dialogue: 0,0:04:36.30,0:04:37.18,Default,,0,0,0,,Làm tốt lắm.
Dialogue: 0,0:04:37.58,0:04:38.10,Default,,0,0,0,,Còn nữa,
Dialogue: 0,0:04:38.34,0:04:39.60,Default,,0,0,0,,bọn ta còn phát hiện\Nchúng vì muốn đề phòng
Dialogue: 0,0:04:39.60,0:04:40.38,Default,,0,0,0,,công nhân giở trò
Dialogue: 0,0:04:40.38,0:04:41.50,Default,,0,0,0,,mà bình thường lúc bãi hàng tan làm
Dialogue: 0,0:04:41.50,0:04:42.70,Default,,0,0,0,,đều sẽ soát người công nhân,
Dialogue: 0,0:04:42.70,0:04:43.86,Default,,0,0,0,,đề phòng họ mang theo đồ đi.
Dialogue: 0,0:04:43.86,0:04:44.55,Default,,0,0,0,,Như vậy
Dialogue: 0,0:04:44.62,0:04:45.90,Default,,0,0,0,,dù cho công nhân có thói trộm vặt
Dialogue: 0,0:04:45.90,0:04:47.43,Default,,0,0,0,,cũng khó mà mang tang vật đi.
Dialogue: 0,0:04:48.10,0:04:48.81,Default,,0,0,0,,Ngươi cảm thấy
Dialogue: 0,0:04:48.81,0:04:50.27,Default,,0,0,0,,khả năng chúng có đồng bọn,
Dialogue: 0,0:04:50.27,0:04:51.93,Default,,0,0,0,,chuyển tang vật đi giúp chúng?
Dialogue: 0,0:04:52.58,0:04:54.18,Default,,0,0,0,,Cho nên bọn ta có một kế hoạch.
Dialogue: 0,0:04:54.46,0:04:55.50,Default,,0,0,0,,Sở dĩ vụ án này đến hiện tại
Dialogue: 0,0:04:55.50,0:04:56.82,Default,,0,0,0,,không có manh mối gì
Dialogue: 0,0:04:57.10,0:04:58.66,Default,,0,0,0,,là vì công nhân trong bãi hàng
Dialogue: 0,0:04:58.66,0:04:59.49,Default,,0,0,0,,có ý bao che.
Dialogue: 0,0:04:59.66,0:05:00.34,Default,,0,0,0,,Chi bằng
Dialogue: 0,0:05:00.34,0:05:02.80,Default,,0,0,0,,chúng ta lẩn vào trong bãi hàng\Nđiều tra tiếp.
Dialogue: 0,0:05:05.18,0:05:05.79,Default,,0,0,0,,Ý tưởng này
Dialogue: 0,0:05:05.82,0:05:07.02,Default,,0,0,0,,có hơi mạo hiểm quá không?
Dialogue: 0,0:05:07.02,0:05:08.62,Default,,0,0,0,,Các ngươi đều lộ mặt ở bãi hàng rồi,
Dialogue: 0,0:05:08.62,0:05:09.48,Default,,0,0,0,,không tiện lắm.
Dialogue: 0,0:05:09.86,0:05:10.69,Default,,0,0,0,,Thiếu khanh đại nhân,
Dialogue: 0,0:05:10.69,0:05:12.35,Default,,0,0,0,,ta chờ câu nói này của ngài mãi.
Dialogue: 0,0:05:12.46,0:05:13.38,Default,,0,0,0,,Ngài đợi chút.
Dialogue: 0,0:05:57.55,0:06:00.06,Default,,0,0,0,,[Thanh Thận Cần]
Dialogue: 0,0:05:58.83,0:05:59.78,Default,,0,0,0,,Ngươi còn biết trò này?
Dialogue: 0,0:05:59.78,0:06:00.54,Default,,0,0,0,,Vẫn cứ phải là ngươi.
Dialogue: 0,0:06:00.54,0:06:01.24,Default,,0,0,0,,Thì tại đó giờ
Dialogue: 0,0:06:01.24,0:06:02.42,Default,,0,0,0,,không gặp dịp nào mà.
Dialogue: 0,0:06:02.79,0:06:03.94,Default,,0,0,0,,Thiếu khanh đại nhân,
Dialogue: 0,0:06:03.94,0:06:05.74,Default,,0,0,0,,ý tưởng này của ta chắc chắn được.
Dialogue: 0,0:06:05.78,0:06:06.91,Default,,0,0,0,,Ngài để bọn ta thử đi.
Dialogue: 0,0:06:07.26,0:06:08.54,Default,,0,0,0,,Cứ vàng thau lẫn lộn đi.
Dialogue: 0,0:06:09.34,0:06:10.64,Default,,0,0,0,,Vàng thau lẫn lộn.
Dialogue: 0,0:06:11.10,0:06:12.74,Default,,0,0,0,,Đi sâu vào căn cứ địch,
Dialogue: 0,0:06:13.10,0:06:14.38,Default,,0,0,0,,tương kế tựu kế.
Dialogue: 0,0:06:14.50,0:06:15.40,Default,,0,0,0,,Vả lại
Dialogue: 0,0:06:15.55,0:06:17.48,Default,,0,0,0,,ta cũng được coi là một vũ khí bí mật.
Dialogue: 0,0:06:17.94,0:06:19.10,Default,,0,0,0,,Với lại thiếu khanh à,
Dialogue: 0,0:06:19.10,0:06:20.54,Default,,0,0,0,,dựa vào kinh nghiệm làm trinh sát của ta,
Dialogue: 0,0:06:20.54,0:06:21.60,Default,,0,0,0,,chỉ cần nhìn mặt lạ,
Dialogue: 0,0:06:21.74,0:06:22.66,Default,,0,0,0,,lượng người thay đổi một cái
Dialogue: 0,0:06:22.66,0:06:24.39,Default,,0,0,0,,đối phương sẽ rất khó phát hiện.
Dialogue: 0,0:06:27.43,0:06:28.58,Default,,0,0,0,,Thiếu khanh đại nhân,
Dialogue: 0,0:06:28.58,0:06:29.64,Default,,0,0,0,,ngài đừng do dự nữa.
Dialogue: 0,0:06:30.13,0:06:32.07,Default,,0,0,0,,Vụ án này nếu cứ kéo dài mãi
Dialogue: 0,0:06:32.12,0:06:33.06,Default,,0,0,0,,lại để người của Kim Ngô vệ
Dialogue: 0,0:06:33.06,0:06:33.74,Default,,0,0,0,,cướp mất đó.
Dialogue: 0,0:06:38.06,0:06:38.55,Default,,0,0,0,,Được.
Dialogue: 0,0:06:38.82,0:06:39.62,Default,,0,0,0,,Vậy chúng ta cứ thử làm theo
Dialogue: 0,0:06:39.62,0:06:40.90,Default,,0,0,0,,ý tưởng của ngươi trước.
Dialogue: 0,0:06:40.90,0:06:41.23,Default,,0,0,0,,Được.
Dialogue: 0,0:06:41.49,0:06:42.30,Default,,0,0,0,,Nào, Thôi Bội.
Dialogue: 0,0:06:42.46,0:06:43.14,Default,,0,0,0,,Ngươi cũng đi báo cho
Dialogue: 0,0:06:43.14,0:06:43.91,Default,,0,0,0,,Thượng Quan thiếu khanh một tiếng.
Dialogue: 0,0:06:43.61,0:06:46.37,Default,,0,0,0,,[Thanh Thận Cần]
Dialogue: 0,0:06:44.10,0:06:45.63,Default,,0,0,0,,Lúc đó nhờ cô ấy giúp đỡ thêm.
Dialogue: 0,0:06:46.19,0:06:46.74,Default,,0,0,0,,Vâng.
Dialogue: 0,0:06:47.82,0:06:48.40,Default,,0,0,0,,Thiếu khanh,
Dialogue: 0,0:06:48.40,0:06:49.22,Default,,0,0,0,,Trần Thập đâu?
Dialogue: 0,0:06:50.18,0:06:51.91,Default,,0,0,0,,Mấy ngày nay Trần Thập xin nghỉ.
Dialogue: 0,0:06:52.05,0:06:53.40,Default,,0,0,0,,Vụ án này cấp bách,
Dialogue: 0,0:06:53.54,0:06:55.06,Default,,0,0,0,,mấy người các ngươi đi là được.
Dialogue: 0,0:06:55.06,0:06:55.78,Default,,0,0,0,,- Vâng.\N- Vâng.
Dialogue: 0,0:06:55.33,0:07:00.33,Default,,0,0,0,,[Thanh Thận Cần]
Dialogue: 0,0:07:16.57,0:07:17.10,Default,,0,0,0,,Ơ.
Dialogue: 0,0:07:18.24,0:07:22.34,Default,,0,0,0,,[Nghe theo mệnh trời]
Dialogue: 0,0:07:19.42,0:07:20.26,Default,,0,0,0,,Cậu đó,
Dialogue: 0,0:07:21.02,0:07:22.42,Default,,0,0,0,,giờ không mặc quan phục,
Dialogue: 0,0:07:22.67,0:07:23.85,Default,,0,0,0,,đứng đó quả là
Dialogue: 0,0:07:23.85,0:07:25.46,Default,,0,0,0,,không ảnh hưởng tới việc làm ăn của ta.
Dialogue: 0,0:07:25.46,0:07:26.49,Default,,0,0,0,,Nhưng cứ đứng đờ ở đó
Dialogue: 0,0:07:26.49,0:07:27.89,Default,,0,0,0,,cũng không phải cách hay.
Dialogue: 0,0:07:29.94,0:07:30.89,Default,,0,0,0,,Xin lỗi.
Dialogue: 0,0:07:32.26,0:07:33.86,Default,,0,0,0,,Cậu không làm việc, không lên lớp,
Dialogue: 0,0:07:33.09,0:07:41.50,Default,,0,0,0,,[Thần cơ diệu toán]
Dialogue: 0,0:07:33.86,0:07:34.92,Default,,0,0,0,,không cần thi cử hả?
Dialogue: 0,0:07:36.58,0:07:38.02,Default,,0,0,0,,Bọn họ bận điều tra vụ án rồi,
Dialogue: 0,0:07:38.02,0:07:39.48,Default,,0,0,0,,ta cũng không giúp được gì.
Dialogue: 0,0:07:39.95,0:07:41.30,Default,,0,0,0,,Vậy sao cậu không đi?
Dialogue: 0,0:07:41.83,0:07:43.50,Default,,0,0,0,,Ta đi cũng chỉ phá thêm thôi.
Dialogue: 0,0:07:44.18,0:07:46.02,Default,,0,0,0,,Cậu, cậu đó, giờ như này
Dialogue: 0,0:07:46.02,0:07:47.75,Default,,0,0,0,,chẳng ra dáng quan gia chút nào.
Dialogue: 0,0:07:48.14,0:07:48.75,Default,,0,0,0,,Vốn dĩ
Dialogue: 0,0:07:48.75,0:07:49.71,Default,,0,0,0,,ta cũng không phải người của Đại Lý Tự.
Dialogue: 0,0:07:49.71,0:07:53.23,Default,,0,0,0,,[Nghe theo mệnh trời]
Dialogue: 0,0:07:52.30,0:07:54.38,Default,,0,0,0,,Cậu cũng không còn là\Ntên tiểu tử nghèo nhà quê
Dialogue: 0,0:07:54.38,0:07:56.30,Default,,0,0,0,,mà hồi đầu ta thấy nữa rồi.
Dialogue: 0,0:08:00.46,0:08:01.32,Default,,0,0,0,,Viên tiên sinh,
Dialogue: 0,0:08:02.01,0:08:03.06,Default,,0,0,0,,ông không nhớ
Dialogue: 0,0:08:03.06,0:08:04.46,Default,,0,0,0,,là ai tới đưa thư thật sao?
Dialogue: 0,0:08:04.62,0:08:06.47,Default,,0,0,0,,Sắc trời lúc đó cũng dần tối rồi,
Dialogue: 0,0:08:06.48,0:08:07.57,Default,,0,0,0,,ai mà nhìn rõ nữa.
Dialogue: 0,0:08:10.26,0:08:11.61,Default,,0,0,0,,Nhưng ta cảm thấy
Dialogue: 0,0:08:12.70,0:08:14.34,Default,,0,0,0,,cậu ấy trông khá thật thà.
Dialogue: 0,0:08:14.54,0:08:15.27,Default,,0,0,0,,Ta thấy vậy.
Dialogue: 0,0:08:16.48,0:08:17.39,Default,,0,0,0,,Người thật thà?
