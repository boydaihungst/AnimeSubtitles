Dialogue: 0,0:24:28.60,0:24:29.97,Default,,0,0,0,,[Dược dẫn][Đỗ Tử][Nhất Chi Hoa]\N[Thượng thư bộ Lễ]
Dialogue: 0,0:24:29.97,0:24:30.44,Default,,0,0,0,,[Miếu Long Vương]
Dialogue: 0,0:24:40.26,0:24:44.14,Default,,0,0,0,,[Dược dẫn]
Dialogue: 0,0:24:52.24,0:24:54.10,Default,,0,0,0,,Không biết có phải thật hay không?
Dialogue: 0,0:25:01.99,0:25:03.64,Default,,0,0,0,,Công tử, để ta hầu hạ ngài.
Dialogue: 0,0:25:05.02,0:25:05.74,Default,,0,0,0,,Đến đây quan gia.
Dialogue: 0,0:25:05.74,0:25:06.22,Default,,0,0,0,,Công tử.
Dialogue: 0,0:26:34.94,0:26:35.60,Default,,0,0,0,,Nhớ kĩ chưa?
Dialogue: 0,0:26:35.60,0:26:36.18,Default,,0,0,0,,Ông chủ,
Dialogue: 0,0:26:36.41,0:26:37.04,Default,,0,0,0,,cho bát mì.
Dialogue: 0,0:26:37.86,0:26:38.35,Default,,0,0,0,,Được.
Dialogue: 0,0:26:50.70,0:26:51.50,Default,,0,0,0,,Mì đến rồi đây.
Dialogue: 0,0:26:55.70,0:26:56.94,Default,,0,0,0,,Khách quan, ngài cứ dùng từ từ.
Dialogue: 0,0:26:56.94,0:26:57.50,Default,,0,0,0,,Ngài thì sao?
Dialogue: 0,0:26:57.50,0:26:58.15,Default,,0,0,0,,Giống ta.
Dialogue: 0,0:27:03.14,0:27:04.00,Default,,0,0,0,,Lý thiếu khanh.
Dialogue: 0,0:27:05.05,0:27:06.33,Default,,0,0,0,,Trùng hợp thế.
Dialogue: 0,0:27:10.17,0:27:11.47,Default,,0,0,0,,Tuy đã mặc đồ dân thường,
Dialogue: 0,0:27:11.47,0:27:12.73,Default,,0,0,0,,nhưng vết chai trên tay
Dialogue: 0,0:27:13.14,0:27:14.94,Default,,0,0,0,,do bình thường tập luyện vẫn còn.
Dialogue: 0,0:27:17.34,0:27:17.99,Default,,0,0,0,,Thổ phỉ?
Dialogue: 0,0:27:19.34,0:27:20.27,Default,,0,0,0,,Tội phạm bỏ trốn.
Dialogue: 0,0:27:25.29,0:27:26.35,Default,,0,0,0,,Có dao trong người.
Dialogue: 0,0:27:27.64,0:27:28.66,Default,,0,0,0,,Bên cạnh còn có một đứa trẻ.
Dialogue: 0,0:27:28.66,0:27:29.58,Default,,0,0,0,,Đúng là rất khó.
Dialogue: 0,0:27:29.90,0:27:30.83,Default,,0,0,0,,Tên tội phạm này đúng là
Dialogue: 0,0:27:30.83,0:27:32.10,Default,,0,0,0,,cũng có kinh nghiệm hành tẩu giang hồ,
Dialogue: 0,0:27:32.10,0:27:34.30,Default,,0,0,0,,cũng biết mang theo một con tin bên cạnh.
Dialogue: 0,0:27:35.25,0:27:36.25,Default,,0,0,0,,Không dễ động đâu.
Dialogue: 0,0:27:38.24,0:27:39.16,Default,,0,0,0,,Tình huống này
Dialogue: 0,0:27:39.22,0:27:39.90,Default,,0,0,0,,không phải trước đây chúng ta
Dialogue: 0,0:27:39.90,0:27:40.97,Default,,0,0,0,,chưa gặp bao giờ.
Dialogue: 0,0:27:47.74,0:27:48.46,Default,,0,0,0,,Làm gì thế?
Dialogue: 0,0:27:48.48,0:27:49.21,Default,,0,0,0,,Chính là hắn.
Dialogue: 0,0:27:49.21,0:27:49.90,Default,,0,0,0,,Bắt lấy.
Dialogue: 0,0:27:49.90,0:27:50.98,Default,,0,0,0,,Đừng lên tiếng, đừng lên tiếng.
Dialogue: 0,0:27:50.98,0:27:51.76,Default,,0,0,0,,Thả ta ra.
Dialogue: 0,0:27:56.14,0:27:57.00,Default,,0,0,0,,Cấm nhúc nhích.
Dialogue: 0,0:28:05.21,0:28:05.96,Default,,0,0,0,,Đưa đi.
Dialogue: 0,0:28:07.58,0:28:08.35,Default,,0,0,0,,Đi.
Dialogue: 0,0:28:08.74,0:28:10.20,Default,,0,0,0,,Ngươi... Ngươi đừng khóc.
Dialogue: 0,0:28:10.95,0:28:11.76,Default,,0,0,0,,Ngươi đừng mà.
Dialogue: 0,0:28:15.58,0:28:16.51,Default,,0,0,0,,Ngươi đừng khóc.
Dialogue: 0,0:28:20.70,0:28:21.14,Default,,0,0,0,,Ta...
Dialogue: 0,0:28:26.69,0:28:27.53,Default,,0,0,0,,Đợi một chút.
Dialogue: 0,0:28:31.09,0:28:32.55,Default,,0,0,0,,Cho ta một cây kẹo đường thổi.
Dialogue: 0,0:28:32.55,0:28:33.41,Default,,0,0,0,,Bao nhiêu tiền?
Dialogue: 0,0:28:33.46,0:28:34.19,Default,,0,0,0,,Một văn tiền.
Dialogue: 0,0:28:53.58,0:28:54.14,Default,,0,0,0,,Nào.
Dialogue: 0,0:28:54.61,0:28:55.38,Default,,0,0,0,,Nhìn này.
Dialogue: 0,0:28:57.70,0:28:58.50,Default,,0,0,0,,Đừng khóc nữa.
Dialogue: 0,0:29:00.28,0:29:01.57,Default,,0,0,0,,Điều tra lai lịch của đứa bé này.
Dialogue: 0,0:29:01.57,0:29:02.30,Default,,0,0,0,,Đưa nó về nhà.
Dialogue: 0,0:29:02.94,0:29:03.47,Default,,0,0,0,,Vâng.
Dialogue: 0,0:29:04.06,0:29:05.14,Default,,0,0,0,,Ngươi cứ tìm ở các quán rượu quanh đây,
Dialogue: 0,0:29:05.14,0:29:06.40,Default,,0,0,0,,có lẽ không ở xa quá đâu.
Dialogue: 0,0:29:06.44,0:29:07.64,Default,,0,0,0,,Đứa bé mặt mũi sạch sẽ,
Dialogue: 0,0:29:08.06,0:29:09.63,Default,,0,0,0,,chắc mới bị bắt cóc không lâu.
Dialogue: 0,0:29:09.63,0:29:11.03,Default,,0,0,0,,Tại sao lại là ở quán rượu?
Dialogue: 0,0:29:12.50,0:29:13.30,Default,,0,0,0,,Tượng đất này
Dialogue: 0,0:29:13.34,0:29:14.33,Default,,0,0,0,,là người lớn nhà ngươi nặn cho ngươi
Dialogue: 0,0:29:14.33,0:29:15.02,Default,,0,0,0,,đúng không?
Dialogue: 0,0:29:16.09,0:29:16.90,Default,,0,0,0,,Ngươi xem nó được trộn từ
Dialogue: 0,0:29:16.90,0:29:18.03,Default,,0,0,0,,keo sữa và bột rễ cây.
Dialogue: 0,0:29:18.14,0:29:19.06,Default,,0,0,0,,Chỉ có bùn đóng dấu trên vò rượu
Dialogue: 0,0:29:19.06,0:29:20.26,Default,,0,0,0,,mới dùng loại bùn này.
Dialogue: 0,0:29:21.10,0:29:21.54,Default,,0,0,0,,Đi đi.
Dialogue: 0,0:29:21.65,0:29:22.18,Default,,0,0,0,,Đi nhé.
Dialogue: 0,0:29:25.10,0:29:25.62,Default,,0,0,0,,Đi.
Dialogue: 0,0:29:29.47,0:29:31.47,Default,,0,0,0,,Lý thiếu khanh quả nhiên không giống
Dialogue: 0,0:29:32.05,0:29:33.05,Default,,0,0,0,,với trước đây nữa.
Dialogue: 0,0:29:35.22,0:29:37.35,Default,,0,0,0,,Gặp được những người và việc khác nhau,
Dialogue: 0,0:29:37.47,0:29:39.07,Default,,0,0,0,,con người tự khắc sẽ thay đổi.
Dialogue: 0,0:29:43.38,0:29:44.46,Default,,0,0,0,,Nhưng mà vẫn phải cảm ơn
Dialogue: 0,0:29:44.46,0:29:45.79,Default,,0,0,0,,thiếu khanh đã trợ giúp.
Dialogue: 0,0:29:48.66,0:29:49.46,Default,,0,0,0,,Khách sáo rồi.
Dialogue: 0,0:29:55.26,0:29:56.75,Default,,0,0,0,,Gặp được nhau ở quán mì này
Dialogue: 0,0:29:57.02,0:29:59.02,Default,,0,0,0,,chắc không phải do trùng hợp đâu nhỉ?
Dialogue: 0,0:30:00.70,0:30:02.02,Default,,0,0,0,,Ta đến đây để gặp ngài.
Dialogue: 0,0:30:04.62,0:30:05.32,Default,,0,0,0,,Tìm ta có việc gì?
Dialogue: 0,0:30:05.32,0:30:06.12,Default,,0,0,0,,Tìm một người.
Dialogue: 0,0:30:06.31,0:30:07.02,Default,,0,0,0,,Ai?
Dialogue: 0,0:30:07.07,0:30:08.00,Default,,0,0,0,,Một nữ tử Tây Vực,
Dialogue: 0,0:30:08.30,0:30:10.83,Default,,0,0,0,,trước đây đã từng\Nkinh doanh sòng bạc ở chợ Nam.
Dialogue: 0,0:30:11.26,0:30:12.99,Default,,0,0,0,,Miêu tả như vậy chung chung quá.
Dialogue: 0,0:30:13.01,0:30:14.14,Default,,0,0,0,,Nếu ta đã đến tìm ngài
Dialogue: 0,0:30:14.46,0:30:16.86,Default,,0,0,0,,thì phải chắc chắn rằng ngài biết người này.
Dialogue: 0,0:30:21.22,0:30:22.95,Default,,0,0,0,,Đây là một thám tử của tiểu quốc,
Dialogue: 0,0:30:23.14,0:30:25.47,Default,,0,0,0,,đến kinh đô để thám thính tình hình quân sự.
Dialogue: 0,0:30:27.58,0:30:28.30,Default,,0,0,0,,Nhưng mà Kim Ngô vệ
Dialogue: 0,0:30:28.30,0:30:29.76,Default,,0,0,0,,đã khống chế được cô ta rồi.
Dialogue: 0,0:30:29.95,0:30:30.58,Default,,0,0,0,,Tất cả những người
Dialogue: 0,0:30:30.58,0:30:32.18,Default,,0,0,0,,có tiếp xúc mật thiết với cô ta,
Dialogue: 0,0:30:32.18,0:30:33.58,Default,,0,0,0,,bọn ta đều sẽ điều tra lại.
Dialogue: 0,0:30:34.94,0:30:35.42,Default,,0,0,0,,Được.
Dialogue: 0,0:30:36.55,0:30:37.82,Default,,0,0,0,,Khưu tướng quân nói phải
Dialogue: 0,0:30:37.82,0:30:38.50,Default,,0,0,0,,thì là phải.
Dialogue: 0,0:30:39.26,0:30:40.51,Default,,0,0,0,,Ngài rất thân với người này sao?
Dialogue: 0,0:30:40.51,0:30:41.90,Default,,0,0,0,,Nhân chứng một vụ án quan trọng của ta.
Dialogue: 0,0:30:41.90,0:30:42.90,Default,,0,0,0,,Vậy nếu như ta hỏi
Dialogue: 0,0:30:42.90,0:30:43.71,Default,,0,0,0,,đó là vụ án gì thì sao?
Dialogue: 0,0:30:43.71,0:30:44.22,Default,,0,0,0,,Đó là cơ mật
Dialogue: 0,0:30:44.22,0:30:45.22,Default,,0,0,0,,của Đại Lý Tự ta,
Dialogue: 0,0:30:45.77,0:30:46.90,Default,,0,0,0,,không thể tiết lộ.
Dialogue: 0,0:30:48.66,0:30:50.20,Default,,0,0,0,,Vậy ta phải điều tra cô ta cẩn thận\Nmới được.
Dialogue: 0,0:30:50.20,0:30:50.70,Default,,0,0,0,,Ngài...
Dialogue: 0,0:30:53.30,0:30:54.38,Default,,0,0,0,,Cũng không biết Khưu tướng quân
Dialogue: 0,0:30:54.38,0:30:55.44,Default,,0,0,0,,có nỗi khổ gì
Dialogue: 0,0:30:57.06,0:30:58.51,Default,,0,0,0,,mà lại biến thành thế này?
Dialogue: 0,0:31:33.06,0:31:33.92,Default,,0,0,0,,Lý thiếu khanh.
Dialogue: 0,0:31:35.22,0:31:35.98,Default,,0,0,0,,Có chuyện gì?
Dialogue: 0,0:31:37.91,0:31:39.00,Default,,0,0,0,,Báo gia,
Dialogue: 0,0:31:39.27,0:31:40.56,Default,,0,0,0,,huynh lợi hại thật đấy.
Dialogue: 0,0:31:41.22,0:31:42.02,Default,,0,0,0,,Cũng bình thường thôi.
Dialogue: 0,0:31:42.02,0:31:44.28,Default,,0,0,0,,Ngươi cũng không vừa, leo cũng nhanh đấy.
Dialogue: 0,0:31:45.46,0:31:46.82,Default,,0,0,0,,Còn vênh cơ đấy.
Dialogue: 0,0:31:47.05,0:31:48.22,Default,,0,0,0,,Báo gia người ta
Dialogue: 0,0:31:48.30,0:31:49.39,Default,,0,0,0,,trước đây lúc còn trong quân đội
Dialogue: 0,0:31:49.39,0:31:50.46,Default,,0,0,0,,là lính trinh sát đấy.
Dialogue: 0,0:31:50.46,0:31:52.03,Default,,0,0,0,,Chúng ta làm sao mà đấu lại được.
Dialogue: 0,0:31:52.03,0:31:53.76,Default,,0,0,0,,Một năm có một dịp như vậy mà thể hiện
Dialogue: 0,0:31:53.76,0:31:54.69,Default,,0,0,0,,nên hăng hái lắm,
Dialogue: 0,0:31:54.78,0:31:56.62,Default,,0,0,0,,chẳng để cho bọn ta chút mặt mũi nào.
Dialogue: 0,0:31:56.62,0:31:58.10,Default,,0,0,0,,Chính xác là đến mức đồng quy vô tận,
Dialogue: 0,0:31:58.10,0:31:58.96,Default,,0,0,0,,cá chết lưới rách luôn.
Dialogue: 0,0:31:58.96,0:32:00.32,Default,,0,0,0,,Ta đã nhẹ nhàng lắm rồi.
Dialogue: 0,0:32:00.39,0:32:01.50,Default,,0,0,0,,Là do các ngươi quá ít luyện tập.
Dialogue: 0,0:32:01.50,0:32:02.66,Default,,0,0,0,,Nếu như là trước đây ở trong quân đội
Dialogue: 0,0:32:02.66,0:32:03.82,Default,,0,0,0,,thì mấy người các ngươi bị đuổi về hết rồi,
Dialogue: 0,0:32:03.82,0:32:05.02,Default,,0,0,0,,- biết chưa?\N- Báo gia,
Dialogue: 0,0:32:05.14,0:32:05.94,Default,,0,0,0,,sau này huynh luyện nữa,
Dialogue: 0,0:32:05.94,0:32:07.22,Default,,0,0,0,,ta nhất định sẽ luyện nghiêm túc.
Dialogue: 0,0:32:07.22,0:32:08.20,Default,,0,0,0,,Ngươi thực sự có tố chất ở mặt này,
Dialogue: 0,0:32:08.20,0:32:09.10,Default,,0,0,0,,mạnh hơn bọn họ nhiều.
Dialogue: 0,0:32:09.10,0:32:10.90,Default,,0,0,0,,Trong quân đội chắc chắn là bồi dưỡng được.
Dialogue: 0,0:32:10.90,0:32:11.43,Default,,0,0,0,,Thật đấy.
Dialogue: 0,0:32:11.70,0:32:13.10,Default,,0,0,0,,Vậy trước đây trong quân đội
Dialogue: 0,0:32:13.10,0:32:14.30,Default,,0,0,0,,có phải huynh lợi hại lắm không?
Dialogue: 0,0:32:14.30,0:32:15.42,Default,,0,0,0,,Ta chẳng là gì cả.
Dialogue: 0,0:32:15.62,0:32:16.50,Default,,0,0,0,,Chẳng là gì cả?
Dialogue: 0,0:32:18.44,0:32:18.99,Default,,0,0,0,,Sao thế,
Dialogue: 0,0:32:19.06,0:32:19.62,Default,,0,0,0,,Báo gia.
Dialogue: 0,0:32:19.65,0:32:20.64,Default,,0,0,0,,Đây là vết thương cũ rồi,
Dialogue: 0,0:32:20.64,0:32:21.58,Default,,0,0,0,,hôm nay chạm phải một chút thôi.
Dialogue: 0,0:32:21.58,0:32:21.98,Default,,0,0,0,,Không sao chứ?
Dialogue: 0,0:32:21.98,0:32:23.78,Default,,0,0,0,,Không sao, không sao, không sao.
Dialogue: 0,0:32:25.30,0:32:26.10,Default,,0,0,0,,Không sao chứ?
Dialogue: 0,0:32:29.90,0:32:30.78,Default,,0,0,0,,Thị lang đại nhân nhà chúng ta
Dialogue: 0,0:32:30.78,0:32:32.19,Default,,0,0,0,,cho mời mấy vị của Minh Kính Đường.
Dialogue: 0,0:32:32.19,0:32:32.99,Default,,0,0,0,,Có án sao?
Dialogue: 0,0:32:33.02,0:32:33.46,Default,,0,0,0,,Vâng.
Dialogue: 0,0:32:33.51,0:32:34.22,Default,,0,0,0,,Mau dẫn đường.
Dialogue: 0,0:32:34.22,0:32:35.06,Default,,0,0,0,,- Đi thôi.\N- Mời đi bên này.
Dialogue: 0,0:32:35.06,0:32:35.74,Default,,0,0,0,,Đi, đi, đi.
Dialogue: 0,0:32:46.50,0:32:48.56,Default,,0,0,0,,Vẫn để Lão Bạch đến trước một bước rồi.
Dialogue: 0,0:32:50.07,0:32:50.70,Default,,0,0,0,,Bính gia.
Dialogue: 0,0:32:51.25,0:32:51.89,Default,,0,0,0,,Thiếu khanh.
Dialogue: 0,0:32:51.89,0:32:52.89,Default,,0,0,0,,Thị lang đại nhân.
Dialogue: 0,0:32:56.14,0:32:56.69,Default,,0,0,0,,Đại nhân,
Dialogue: 0,0:32:57.34,0:32:58.18,Default,,0,0,0,,người này lúc còn sống
Dialogue: 0,0:32:58.18,0:32:59.51,Default,,0,0,0,,đã chịu không ít giày vò,
Dialogue: 0,0:32:59.70,0:33:01.30,Default,,0,0,0,,toàn thân đều có thương tích,
Dialogue: 0,0:33:01.42,0:33:03.06,Default,,0,0,0,,nhưng đều không đủ dẫn đến mất mạng.
Dialogue: 0,0:33:03.06,0:33:04.12,Default,,0,0,0,,Vết thương trí mạng
Dialogue: 0,0:33:04.54,0:33:05.78,Default,,0,0,0,,chỉ có chỗ này.
Dialogue: 0,0:33:07.66,0:33:08.99,Default,,0,0,0,,Người này bị siết cổ chết
Dialogue: 0,0:33:09.42,0:33:11.68,Default,,0,0,0,,nhưng vết siết lại không chỉ có một đường.
Dialogue: 0,0:33:11.77,0:33:12.82,Default,,0,0,0,,Trông hắn phải chịu lăng nhục
Dialogue: 0,0:33:12.82,0:33:14.22,Default,,0,0,0,,trong một khoảng thời gian dài\Ntrước khi chết,
Dialogue: 0,0:33:14.22,0:33:16.22,Default,,0,0,0,,lại nhiều lần bị siết cổ đến ngạt thở.
Dialogue: 0,0:33:16.90,0:33:17.98,Default,,0,0,0,,Đây không chỉ đơn giản là
Dialogue: 0,0:33:17.98,0:33:19.58,Default,,0,0,0,,muốn lấy mạng của người chết,
Dialogue: 0,0:33:19.72,0:33:20.54,Default,,0,0,0,,mà giống như...
Dialogue: 0,0:33:20.54,0:33:21.26,Default,,0,0,0,,Tra tấn.
Dialogue: 0,0:33:22.58,0:33:24.18,Default,,0,0,0,,Người chết có thân phận thế nào?
Dialogue: 0,0:33:24.18,0:33:25.90,Default,,0,0,0,,Người chết tên là Triệu Như Ý,
Dialogue: 0,0:33:26.10,0:33:27.50,Default,,0,0,0,,trước đây là một tên trộm,
Dialogue: 0,0:33:27.64,0:33:28.77,Default,,0,0,0,,là một tay lão luyện.
Dialogue: 0,0:33:29.42,0:33:30.86,Default,,0,0,0,,Thích ra tay ở
Dialogue: 0,0:33:30.90,0:33:32.10,Default,,0,0,0,,nhà trọ và tiền trang,
Dialogue: 0,0:33:32.38,0:33:34.03,Default,,0,0,0,,giỏi nhất là việc mở khoá.
Dialogue: 0,0:33:34.66,0:33:37.44,Default,,0,0,0,,Hắn được mệnh danh có tay nghề\Nđộc nhất vô nhị trong giới,
Dialogue: 0,0:33:37.44,0:33:39.57,Default,,0,0,0,,chỉ là sau này có một lần lỡ tay
Dialogue: 0,0:33:39.70,0:33:40.76,Default,,0,0,0,,nên mới vào đại lao.
Dialogue: 0,0:33:40.98,0:33:42.22,Default,,0,0,0,,Sau khi ra ngoài
Dialogue: 0,0:33:42.90,0:33:44.56,Default,,0,0,0,,thì không còn động tĩnh gì nữa.
Dialogue: 0,0:33:45.54,0:33:47.30,Default,,0,0,0,,Không ngờ lại chết ở đây.
Dialogue: 0,0:33:48.88,0:33:49.78,Default,,0,0,0,,Gần đây có nhà trọ
Dialogue: 0,0:33:49.78,0:33:51.84,Default,,0,0,0,,hoặc tiền trang nào bị mất trộm không?
Dialogue: 0,0:33:55.33,0:33:56.66,Default,,0,0,0,,Chuyện xảy ra từ khi nào?
Dialogue: 0,0:33:56.73,0:33:58.06,Default,,0,0,0,,Khoảng nửa tháng trước.
Dialogue: 0,0:33:58.38,0:33:59.18,Default,,0,0,0,,Cái lỗ này
Dialogue: 0,0:33:59.22,0:34:00.26,Default,,0,0,0,,là đào từ một căn nhà dân ở mặt đường
Dialogue: 0,0:34:00.26,0:34:01.06,Default,,0,0,0,,thông đến đây.
Dialogue: 0,0:34:01.34,0:34:02.00,Default,,0,0,0,,Tên trộm này
Dialogue: 0,0:34:02.19,0:34:03.42,Default,,0,0,0,,bỏ nhiều công sức thật đấy.
Dialogue: 0,0:34:03.42,0:34:06.59,Default,,0,0,0,,Bình thường các ngươi không có người\Nđi tuần quanh tiệm sao?
Dialogue: 0,0:34:06.59,0:34:07.50,Default,,0,0,0,,Cái lỗ to như vậy
Dialogue: 0,0:34:07.54,0:34:08.61,Default,,0,0,0,,không phải ngày một ngày hai
Dialogue: 0,0:34:08.61,0:34:09.61,Default,,0,0,0,,là có thể đào được.
Dialogue: 0,0:34:09.74,0:34:11.26,Default,,0,0,0,,Sao có thể không ai phát hiện ra chứ?
Dialogue: 0,0:34:11.26,0:34:12.06,Default,,0,0,0,,Là thế này,
Dialogue: 0,0:34:12.66,0:34:13.39,Default,,0,0,0,,các ngài xem.
Dialogue: 0,0:34:13.96,0:34:14.70,Default,,0,0,0,,Hôm đó
Dialogue: 0,0:34:15.22,0:34:16.88,Default,,0,0,0,,có một khách hàng đến lấy tiền,
Dialogue: 0,0:34:17.06,0:34:18.10,Default,,0,0,0,,bọn ta mới phát hiện ra
Dialogue: 0,0:34:18.10,0:34:20.03,Default,,0,0,0,,cái tủ của ông ấy đã bị ai đó động vào.
Dialogue: 0,0:34:20.38,0:34:21.24,Default,,0,0,0,,Các vị quan gia,
Dialogue: 0,0:34:21.34,0:34:22.07,Default,,0,0,0,,các ngài xem,
Dialogue: 0,0:34:22.30,0:34:23.96,Default,,0,0,0,,đây vốn dĩ là khoá tủ của bọn ta.
Dialogue: 0,0:34:24.31,0:34:25.03,Default,,0,0,0,,Hôm đó,
Dialogue: 0,0:34:25.14,0:34:26.60,Default,,0,0,0,,khách hàng vừa định mở khoá
Dialogue: 0,0:34:26.78,0:34:28.57,Default,,0,0,0,,thì phát hiện ở bên trong\Ncó một chiếc chìa khoá gãy.
Dialogue: 0,0:34:28.57,0:34:29.89,Default,,0,0,0,,Rõ ràng là có vấn đề,
Dialogue: 0,0:34:30.03,0:34:31.23,Default,,0,0,0,,nên bọn ta đã điều tra.
Dialogue: 0,0:34:31.30,0:34:32.82,Default,,0,0,0,,Kết quả vừa tra thì phát hiện ra
Dialogue: 0,0:34:32.82,0:34:34.58,Default,,0,0,0,,chỗ nền này ở phía dưới trống rỗng.
Dialogue: 0,0:34:34.58,0:34:35.53,Default,,0,0,0,,Bọn ta lật nền lên
Dialogue: 0,0:34:35.86,0:34:37.19,Default,,0,0,0,,thì nhìn thấy cái lỗ này.
Dialogue: 0,0:34:37.84,0:34:38.30,Default,,0,0,0,,Tôn Báo.
Dialogue: 0,0:34:39.86,0:34:40.92,Default,,0,0,0,,Được, thiếu khanh.
Dialogue: 0,0:34:42.98,0:34:43.74,Default,,0,0,0,,Báo gia, Báo gia.
Dialogue: 0,0:34:43.74,0:34:44.38,Default,,0,0,0,,Báo gia,
Dialogue: 0,0:34:44.44,0:34:45.17,Default,,0,0,0,,ống đánh lửa.
Dialogue: 0,0:34:45.93,0:34:47.24,Default,,0,0,0,,Có bị mất thứ gì không?
Dialogue: 0,0:34:48.10,0:34:49.78,Default,,0,0,0,,Ngân lượng trong tiệm không mất tí nào cả.
Dialogue: 0,0:34:49.78,0:34:50.77,Default,,0,0,0,,Không mất tí nào?
Dialogue: 0,0:34:51.15,0:34:52.44,Default,,0,0,0,,Trước giờ kẻ trộm không bao giờ\Nđi ra tay không,
Dialogue: 0,0:34:52.44,0:34:53.70,Default,,0,0,0,,thế này không đúng lắm.
Dialogue: 0,0:34:54.73,0:34:55.57,Default,,0,0,0,,Có khi nào
Dialogue: 0,0:34:55.74,0:34:57.82,Default,,0,0,0,,tên trộm đó vẫn chưa mở được khoá,
Dialogue: 0,0:34:58.22,0:34:59.08,Default,,0,0,0,,có tật giật mình
Dialogue: 0,0:34:59.10,0:35:00.43,Default,,0,0,0,,nên chạy luôn rồi không?
Dialogue: 0,0:35:00.54,0:35:02.74,Default,,0,0,0,,Được đấy, biết dùng thành ngữ rồi cơ đấy.
Dialogue: 0,0:35:03.15,0:35:04.66,Default,,0,0,0,,Cái khoá này hắn đã mở rồi.
Dialogue: 0,0:35:05.42,0:35:06.50,Default,,0,0,0,,Khoá của tiệm chúng ta
Dialogue: 0,0:35:06.50,0:35:08.56,Default,,0,0,0,,để phòng kẻ trộm nên đều đặt làm riêng.
Dialogue: 0,0:35:10.63,0:35:12.02,Default,,0,0,0,,Sau khi cắm chìa khoá vào
Dialogue: 0,0:35:12.58,0:35:13.91,Default,,0,0,0,,thì phải xoay theo thứ tự
Dialogue: 0,0:35:14.18,0:35:15.11,Default,,0,0,0,,mới mở được khoá.
Dialogue: 0,0:35:15.58,0:35:16.74,Default,,0,0,0,,Rút ra cũng như vậy.
Dialogue: 0,0:35:17.62,0:35:18.38,Default,,0,0,0,,Bây giờ chìa khoá
Dialogue: 0,0:35:18.38,0:35:19.54,Default,,0,0,0,,bị gãy ở vị trí này,
Dialogue: 0,0:35:20.02,0:35:22.02,Default,,0,0,0,,rõ ràng là khoá đã từng được mở ra rồi.
Dialogue: 0,0:35:22.84,0:35:23.98,Default,,0,0,0,,Ý ngươi là
Dialogue: 0,0:35:24.22,0:35:25.48,Default,,0,0,0,,tên trộm mở khoá ra
Dialogue: 0,0:35:25.74,0:35:27.18,Default,,0,0,0,,nhưng không lấy tiền ở trong,
Dialogue: 0,0:35:27.18,0:35:28.50,Default,,0,0,0,,sau đó lại khoá lại ư?
Dialogue: 0,0:35:29.26,0:35:31.19,Default,,0,0,0,,Thế không phải uổng công vô ích sao?
Dialogue: 0,0:35:31.46,0:35:32.78,Default,,0,0,0,,Trông tình hình
Dialogue: 0,0:35:32.96,0:35:34.29,Default,,0,0,0,,thì chỉ có thể là như vậy.
Dialogue: 0,0:35:34.39,0:35:35.42,Default,,0,0,0,,Ta cũng cảm thấy rất lạ.
Dialogue: 0,0:35:35.42,0:35:36.62,Default,,0,0,0,,Muốn mở cái khoá này ra
Dialogue: 0,0:35:36.62,0:35:37.91,Default,,0,0,0,,nhất định phải có hai chiếc chìa khoá ư?
Dialogue: 0,0:35:37.91,0:35:38.44,Default,,0,0,0,,Đúng thế.
Dialogue: 0,0:35:38.47,0:35:38.94,Default,,0,0,0,,Vậy...
Dialogue: 0,0:35:39.35,0:35:40.18,Default,,0,0,0,,Vì muốn đảm bảo
Dialogue: 0,0:35:40.34,0:35:41.59,Default,,0,0,0,,nên một chìa để ở tiệm,
Dialogue: 0,0:35:41.70,0:35:43.30,Default,,0,0,0,,một chìa giao cho khách hàng.
Dialogue: 0,0:35:43.66,0:35:44.58,Default,,0,0,0,,Chìa khoá để ở tiệm
Dialogue: 0,0:35:44.58,0:35:45.71,Default,,0,0,0,,đều là do ta bảo quản,
Dialogue: 0,0:35:45.86,0:35:47.38,Default,,0,0,0,,tuyệt đối không có ai động vào.
Dialogue: 0,0:35:47.38,0:35:48.10,Default,,0,0,0,,Còn cái phía khách hàng
Dialogue: 0,0:35:48.10,0:35:49.03,Default,,0,0,0,,thì ta không rõ.
Dialogue: 0,0:35:52.38,0:35:53.10,Default,,0,0,0,,Thế nào?
Dialogue: 0,0:35:53.46,0:35:54.19,Default,,0,0,0,,Thiếu khanh,
Dialogue: 0,0:35:54.78,0:35:55.46,Default,,0,0,0,,bên dưới cái lỗ này
Dialogue: 0,0:35:55.46,0:35:57.14,Default,,0,0,0,,cách một đoạn không xa có một cái giếng,
Dialogue: 0,0:35:57.14,0:35:58.02,Default,,0,0,0,,bên dưới có đường nước,
Dialogue: 0,0:35:58.02,0:36:00.36,Default,,0,0,0,,vừa hay thông đến một mảnh đất\Nở gần tiền trang.
Dialogue: 0,0:36:00.36,0:36:01.70,Default,,0,0,0,,Muốn đào qua đó không khó,
Dialogue: 0,0:36:01.70,0:36:02.58,Default,,0,0,0,,nhưng để khảo sát được
Dialogue: 0,0:36:02.58,0:36:04.10,Default,,0,0,0,,phải tốn rất nhiều công sức.
Dialogue: 0,0:36:04.10,0:36:05.10,Default,,0,0,0,,Nhưng lạ thật đấy,
Dialogue: 0,0:36:05.34,0:36:07.54,Default,,0,0,0,,tốn nhiều công sức như vậy\Nđể đào hầm vào đây,
Dialogue: 0,0:36:07.54,0:36:09.40,Default,,0,0,0,,hắn không lấy tiền thì định làm gì?
Dialogue: 0,0:36:10.94,0:36:12.79,Default,,0,0,0,,Ta nhớ ở thôn bọn ta
Dialogue: 0,0:36:12.82,0:36:14.49,Default,,0,0,0,,thường xuyên đào hầm.
Dialogue: 0,0:36:14.70,0:36:15.90,Default,,0,0,0,,Ngoài để tiền ra
Dialogue: 0,0:36:15.92,0:36:17.45,Default,,0,0,0,,còn để cả những thứ khác nữa.
Dialogue: 0,0:36:17.74,0:36:19.02,Default,,0,0,0,,Đôi khi thời gian lâu quá,
Dialogue: 0,0:36:19.02,0:36:20.75,Default,,0,0,0,,đến bản thân cũng không nhớ nữa.
Dialogue: 0,0:36:20.83,0:36:21.56,Default,,0,0,0,,Ngài nói xem,
Dialogue: 0,0:36:22.10,0:36:23.62,Default,,0,0,0,,có khi nào trong tiệm
Dialogue: 0,0:36:23.62,0:36:24.55,Default,,0,0,0,,còn có thứ gì khác
Dialogue: 0,0:36:24.62,0:36:26.26,Default,,0,0,0,,mà ông chủ không biết không?
Dialogue: 0,0:36:26.66,0:36:28.46,Default,,0,0,0,,Tiền trang có hai chiếc chìa khoá,
Dialogue: 0,0:36:28.46,0:36:30.03,Default,,0,0,0,,một chiếc do ông chủ giữ,
Dialogue: 0,0:36:30.18,0:36:32.06,Default,,0,0,0,,chiếc còn lại ở trong tay khách hàng.
Dialogue: 0,0:36:32.06,0:36:33.12,Default,,0,0,0,,Lúc khách khoá lại,
Dialogue: 0,0:36:33.30,0:36:34.63,Default,,0,0,0,,thường sẽ tự mình làm.
Dialogue: 0,0:36:34.74,0:36:35.74,Default,,0,0,0,,Ông chủ để tránh hiềm nghi
Dialogue: 0,0:36:35.74,0:36:37.30,Default,,0,0,0,,cũng sẽ không đứng nhìn bên cạnh.
Dialogue: 0,0:36:37.30,0:36:38.10,Default,,0,0,0,,Vậy nên,
Dialogue: 0,0:36:38.46,0:36:40.08,Default,,0,0,0,,nếu trong lúc khách hàng đang khoá
Dialogue: 0,0:36:40.08,0:36:41.30,Default,,0,0,0,,mà bỏ thêm đồ vào trong,
Dialogue: 0,0:36:41.30,0:36:42.83,Default,,0,0,0,,vậy thì nếu thứ này có gì kỳ lạ,
Dialogue: 0,0:36:42.83,0:36:43.78,Default,,0,0,0,,thậm chí là có mất
Dialogue: 0,0:36:43.78,0:36:45.30,Default,,0,0,0,,thì cũng sẽ không nói với ông chủ.
Dialogue: 0,0:36:45.30,0:36:46.50,Default,,0,0,0,,Chìa khoá của tiệm
Dialogue: 0,0:36:46.62,0:36:48.22,Default,,0,0,0,,vẫn luôn nằm trong tay ông chủ.
Dialogue: 0,0:36:48.22,0:36:49.58,Default,,0,0,0,,Như vậy trong đám người này
Dialogue: 0,0:36:49.58,0:36:51.78,Default,,0,0,0,,chắc chắn phải có một người\Nthành thạo việc mở khoá.
Dialogue: 0,0:36:51.78,0:36:53.31,Default,,0,0,0,,Vậy rất có thể là Triệu Như Ý.
Dialogue: 0,0:36:53.66,0:36:55.99,Default,,0,0,0,,Thị lang Hình bộ,\NPhùng Giản đại nhân đã nói
Dialogue: 0,0:36:56.03,0:36:58.02,Default,,0,0,0,,hắn chuyên môn đi mở khoá,
Dialogue: 0,0:36:58.18,0:37:00.11,Default,,0,0,0,,hơn nữa còn rất có tiếng trong nghề.
Dialogue: 0,0:37:00.14,0:37:02.23,Default,,0,0,0,,Nhưng hắn bị mất một ngón tay cái.
Dialogue: 0,0:37:02.38,0:37:03.34,Default,,0,0,0,,Cái lỗ to như vậy,
Dialogue: 0,0:37:03.34,0:37:04.74,Default,,0,0,0,,một mình hắn không thể đào được.
Dialogue: 0,0:37:04.74,0:37:06.18,Default,,0,0,0,,Còn có khảo sát địa hình.
Dialogue: 0,0:37:07.10,0:37:07.86,Default,,0,0,0,,Đồng bọn?
Dialogue: 0,0:37:08.10,0:37:09.10,Default,,0,0,0,,Tranh chấp nội bộ?
Dialogue: 0,0:37:09.62,0:37:10.94,Default,,0,0,0,,Các ngươi nói đều rất có lý.
Dialogue: 0,0:37:10.94,0:37:11.87,Default,,0,0,0,,Còn một điểm nữa.
Dialogue: 0,0:37:12.10,0:37:12.76,Default,,0,0,0,,Nếu như cửa tủ
Dialogue: 0,0:37:12.76,0:37:13.70,Default,,0,0,0,,đã từng bị mở,
Dialogue: 0,0:37:13.98,0:37:15.40,Default,,0,0,0,,hơn nữa còn lấp lại lối đi
Dialogue: 0,0:37:15.54,0:37:16.66,Default,,0,0,0,,và khoá lại như cũ,
Dialogue: 0,0:37:16.98,0:37:17.94,Default,,0,0,0,,đây có thể hiểu là
Dialogue: 0,0:37:17.94,0:37:19.10,Default,,0,0,0,,không muốn bị người khác phát hiện.
Dialogue: 0,0:37:19.10,0:37:19.80,Default,,0,0,0,,Nhưng mà...
Dialogue: 0,0:37:22.18,0:37:24.61,Default,,0,0,0,,Cố tình làm chìa khoá bị gãy trong ổ khoá
Dialogue: 0,0:37:26.84,0:37:28.22,Default,,0,0,0,,là có ý muốn để
Dialogue: 0,0:37:28.22,0:37:28.82,Default,,0,0,0,,khi người mất đồ đến
Dialogue: 0,0:37:28.82,0:37:31.14,Default,,0,0,0,,phát hiện ra tủ của hắn\Nđã có người động vào.
Dialogue: 0,0:37:31.14,0:37:31.82,Default,,0,0,0,,Người mất đồ đâu?
Dialogue: 0,0:37:31.82,0:37:33.14,Default,,0,0,0,,Đã truyền đến Minh Kính Đường rồi.
Dialogue: 0,0:37:33.14,0:37:33.74,Default,,0,0,0,,Tốt.
Dialogue: 0,0:37:36.54,0:37:37.74,Default,,0,0,0,,Vương Thất, Thôi Bội,
Dialogue: 0,0:37:38.22,0:37:39.86,Default,,0,0,0,,hai người các ngươi đến nhà Triệu Như Ý
Dialogue: 0,0:37:39.86,0:37:41.26,Default,,0,0,0,,xem xem tình hình thế nào.
Dialogue: 0,0:37:41.36,0:37:42.63,Default,,0,0,0,,Alibaba, Tôn Báo,
Dialogue: 0,0:37:43.09,0:37:43.82,Default,,0,0,0,,các ngươi đi hỏi
Dialogue: 0,0:37:43.82,0:37:44.62,Default,,0,0,0,,những người có tiền án,
Dialogue: 0,0:37:44.62,0:37:45.18,Default,,0,0,0,,xem xem có thể
Dialogue: 0,0:37:45.18,0:37:46.34,Default,,0,0,0,,hỏi được điều gì bất thường không.
Dialogue: 0,0:37:46.34,0:37:46.78,Default,,0,0,0,,Đi đi.
Dialogue: 0,0:37:47.14,0:37:47.61,Default,,0,0,0,,Rõ.
Dialogue: 0,0:37:48.96,0:37:49.98,Default,,0,0,0,,Báo gia, Báo gia.
Dialogue: 0,0:37:50.39,0:37:50.90,Default,,0,0,0,,Báo gia.
Dialogue: 0,0:37:51.38,0:37:52.58,Default,,0,0,0,,- Đưa cho ta đi.\N- Được.
Dialogue: 0,0:38:10.34,0:38:10.90,Default,,0,0,0,,Tôn Báo.
Dialogue: 0,0:38:11.78,0:38:13.30,Default,,0,0,0,,ngươi có ý đồ xấu.
Dialogue: 0,0:38:14.71,0:38:16.94,Default,,0,0,0,,Vừa nãy lúc thiếu khanh\Nnói về tình tiết vụ án,
Dialogue: 0,0:38:16.94,0:38:18.60,Default,,0,0,0,,ngươi định nói nhưng lại thôi.
Dialogue: 0,0:38:23.62,0:38:24.54,Default,,0,0,0,,Ta cảm thấy
Dialogue: 0,0:38:25.59,0:38:26.47,Default,,0,0,0,,cách hành động của tên trộm này
Dialogue: 0,0:38:26.47,0:38:27.46,Default,,0,0,0,,khá giống với lính trinh sát.
Dialogue: 0,0:38:27.46,0:38:28.06,Default,,0,0,0,,Thế là sao?
Dialogue: 0,0:38:28.50,0:38:29.74,Default,,0,0,0,,Lúc bọn ta làm lính trinh sát,
Dialogue: 0,0:38:29.74,0:38:31.50,Default,,0,0,0,,đến doanh trại của địch để\Nthăm dò tình hình quân sự,
Dialogue: 0,0:38:31.50,0:38:32.26,Default,,0,0,0,,đôi lúc sẽ cố tình
Dialogue: 0,0:38:32.26,0:38:33.66,Default,,0,0,0,,để lại một vài dấu vết gì đó
Dialogue: 0,0:38:33.82,0:38:35.06,Default,,0,0,0,,để khiến đối phương nghi ngờ,
Dialogue: 0,0:38:35.06,0:38:37.12,Default,,0,0,0,,nảy sinh hoài nghi với người của mình,
Dialogue: 0,0:38:37.15,0:38:38.88,Default,,0,0,0,,dẫn dắt kẻ định đưa ra phán đoán.
Dialogue: 0,0:38:39.46,0:38:40.60,Default,,0,0,0,,Vậy ổ khoá kia...
Dialogue: 0,0:38:41.22,0:38:43.62,Default,,0,0,0,,Sao vừa nãy ngươi không nói với thiếu khanh?
Dialogue: 0,0:38:44.66,0:38:46.20,Default,,0,0,0,,Một tên trộm sao có thể có dính dáng
Dialogue: 0,0:38:46.20,0:38:47.53,Default,,0,0,0,,với lính trinh sát được.
Dialogue: 0,0:38:49.14,0:38:49.82,Default,,0,0,0,,Cũng đúng.
Dialogue: 0,0:38:50.74,0:38:51.67,Default,,0,0,0,,Ngươi đợi ta với.
Dialogue: 0,0:38:56.73,0:38:57.90,Default,,0,0,0,,Lúc ta biết Như Ý,
Dialogue: 0,0:38:57.98,0:38:59.34,Default,,0,0,0,,chàng đã không còn là kẻ trộm nữa rồi.
Dialogue: 0,0:38:59.34,0:39:01.94,Default,,0,0,0,,Việc kinh doanh của phường nhuộm bọn ta\Nrất tốt.
Dialogue: 0,0:39:02.42,0:39:04.38,Default,,0,0,0,,Nhưng cô biết hắn ta đã từng?
Dialogue: 0,0:39:05.78,0:39:06.46,Default,,0,0,0,,Đúng.
Dialogue: 0,0:39:07.22,0:39:09.28,Default,,0,0,0,,Chàng không hề giấu ta chuyện quá khứ.
Dialogue: 0,0:39:11.15,0:39:12.55,Default,,0,0,0,,Một người phụ nữ xinh đẹp,
Dialogue: 0,0:39:12.80,0:39:14.60,Default,,0,0,0,,hà cớ gì phải đi theo một tên trộm?
Dialogue: 0,0:39:15.78,0:39:17.17,Default,,0,0,0,,Trước đây ta ở thanh lâu,
Dialogue: 0,0:39:17.22,0:39:18.87,Default,,0,0,0,,là chàng đã chuộc thân cho ta.
Dialogue: 0,0:39:19.26,0:39:20.46,Default,,0,0,0,,Chàng ấy là người tốt.
Dialogue: 0,0:39:20.83,0:39:21.86,Default,,0,0,0,,Cho dù là trộm
Dialogue: 0,0:39:22.48,0:39:24.81,Default,,0,0,0,,thì cũng trộm của những người đáng bị trộm.
Dialogue: 0,0:39:25.86,0:39:26.58,Default,,0,0,0,,Hơn nữa,
Dialogue: 0,0:39:27.58,0:39:29.31,Default,,0,0,0,,cái này là do chàng tự mình chặt.
Dialogue: 0,0:39:34.72,0:39:35.94,Default,,0,0,0,,[Đại Lý Tự]
