Dialogue: 0,0:30:51.81,0:30:52.66,Default,,0,0,0,,Bóp chân đi.
Dialogue: 0,0:30:56.01,0:30:56.62,Default,,0,0,0,,Càn,
Dialogue: 0,0:30:56.91,0:30:57.80,Default,,0,0,0,,Khảm,
Dialogue: 0,0:30:59.18,0:30:59.62,Default,,0,0,0,,Cấn,
Dialogue: 0,0:30:59.80,0:31:00.42,Default,,0,0,0,,Ly,
Dialogue: 0,0:31:00.44,0:31:01.09,Default,,0,0,0,,Khôn,
Dialogue: 0,0:31:01.49,0:31:01.94,Default,,0,0,0,,Đoài,
Dialogue: 0,0:31:02.19,0:31:02.76,Default,,0,0,0,,Khởi,
Dialogue: 0,0:31:09.42,0:31:10.07,Default,,0,0,0,,Âm,
Dialogue: 0,0:31:11.18,0:31:11.86,Default,,0,0,0,,Dương.
Dialogue: 0,0:31:17.96,0:31:18.72,Default,,0,0,0,,Quẻ Khảm.
Dialogue: 0,0:31:19.70,0:31:20.38,Default,,0,0,0,,Phương Bắc.
Dialogue: 0,0:31:21.62,0:31:22.34,Default,,0,0,0,,Mệnh Thủy.
Dialogue: 0,0:31:22.67,0:31:23.46,Default,,0,0,0,,Thủy?
Dialogue: 0,0:31:23.50,0:31:24.49,Default,,0,0,0,,Dạo gần đây
Dialogue: 0,0:31:25.92,0:31:27.50,Default,,0,0,0,,có thể cậu sẽ tiếp xúc
Dialogue: 0,0:31:28.03,0:31:28.83,Default,,0,0,0,,với nước.
Dialogue: 0,0:31:31.49,0:31:32.38,Default,,0,0,0,,Nước.
Dialogue: 0,0:31:32.53,0:31:34.12,Default,,0,0,0,,Với lại chuyện của ca ca cậu
Dialogue: 0,0:31:35.01,0:31:37.11,Default,,0,0,0,,có lẽ sẽ có manh mối.
Dialogue: 0,0:31:37.58,0:31:38.42,Default,,0,0,0,,Thật à?
Dialogue: 0,0:31:38.48,0:31:42.54,Default,,0,0,0,,[Vui vẻ nghe mệnh trời]
Dialogue: 0,0:31:41.22,0:31:41.90,Default,,0,0,0,,Từ từ.
Dialogue: 0,0:31:41.90,0:31:43.10,Default,,0,0,0,,Ca ca ta sắp có tin rồi?
Dialogue: 0,0:31:43.30,0:31:44.98,Default,,0,0,0,,Có manh mối thôi.
Dialogue: 0,0:31:46.09,0:31:46.86,Default,,0,0,0,,Với lại,
Dialogue: 0,0:31:48.70,0:31:49.65,Default,,0,0,0,,quẻ Khảm
Dialogue: 0,0:31:50.46,0:31:51.78,Default,,0,0,0,,không phải quẻ lành.
Dialogue: 0,0:31:53.77,0:31:55.98,Default,,0,0,0,,Nhất định phải cẩn thận hơn.
Dialogue: 0,0:31:58.82,0:31:59.38,Default,,0,0,0,,Được rồi.
Dialogue: 0,0:31:59.73,0:32:00.66,Default,,0,0,0,,Xem xong quẻ rồi,
Dialogue: 0,0:32:00.74,0:32:02.60,Default,,0,0,0,,cũng không lấy tiền của cậu, về đi.
Dialogue: 0,0:32:03.44,0:32:04.18,Default,,0,0,0,,Kỳ lạ.
Dialogue: 0,0:32:04.91,0:32:06.42,Default,,0,0,0,,Sao ông đuổi ta về?
Dialogue: 0,0:32:07.07,0:32:08.33,Default,,0,0,0,,Cậu mặc quan phục ở đây,
Dialogue: 0,0:32:08.33,0:32:08.94,Default,,0,0,0,,người nào không biết
Dialogue: 0,0:32:08.94,0:32:10.15,Default,,0,0,0,,còn tưởng ta phạm tội gì,
Dialogue: 0,0:32:10.15,0:32:12.08,Default,,0,0,0,,cậu làm ảnh hưởng việc làm ăn của ta.
Dialogue: 0,0:32:12.24,0:32:13.13,Default,,0,0,0,,Ngại quá,
Dialogue: 0,0:32:13.16,0:32:13.89,Default,,0,0,0,,Ta biết rồi.
Dialogue: 0,0:32:14.00,0:32:18.95,Default,,0,0,0,,[Thần cơ diệu toán]
Dialogue: 0,0:32:14.06,0:32:14.78,Default,,0,0,0,,Ta đi đây.
Dialogue: 0,0:32:15.38,0:32:16.14,Default,,0,0,0,,Đi từ từ.
Dialogue: 0,0:32:16.53,0:32:17.05,Default,,0,0,0,,Được.
Dialogue: 0,0:32:17.57,0:32:18.97,Default,,0,0,0,,Ta đi đây, Viên tiên sinh.
Dialogue: 0,0:32:19.46,0:32:20.96,Default,,0,0,0,,Lần sau ta đến sẽ mang bánh bao cho ông.
Dialogue: 0,0:32:20.96,0:32:22.26,Default,,0,0,0,,Bánh bao nhân rau thì thôi.
Dialogue: 0,0:32:22.26,0:32:23.59,Default,,0,0,0,,Muốn bánh bao nhân thịt.
Dialogue: 0,0:32:24.53,0:32:25.86,Default,,0,0,0,,Muốn bánh bao nhân thịt?
Dialogue: 0,0:32:26.24,0:32:27.00,Default,,0,0,0,,Ta nhớ rồi.
Dialogue: 0,0:32:27.50,0:32:31.50,Default,,0,0,0,,[Thần cơ diệu toán]
Dialogue: 0,0:32:32.86,0:32:35.09,Default,,0,0,0,,Xem quẻ đây.
Dialogue: 0,0:32:41.02,0:32:42.19,Default,,0,0,0,,Xin... xin lỗi.
Dialogue: 0,0:33:23.49,0:33:26.34,Default,,0,0,0,,[Bắc Thị, ngày 16 tháng 4\Nnăm Thánh Công thứ hai]
Dialogue: 0,0:33:31.70,0:33:32.35,Default,,0,0,0,,Cảm ơn.
Dialogue: 0,0:33:32.36,0:33:33.13,Default,,0,0,0,,Không có gì.
Dialogue: 0,0:33:33.81,0:33:34.55,Default,,0,0,0,,Đi nhờ.
Dialogue: 0,0:33:39.78,0:33:40.52,Default,,0,0,0,,Đi đâu mất rồi?
Dialogue: 0,0:33:40.52,0:33:41.78,Default,,0,0,0,,Khách quan, xem qua đi.
Dialogue: 0,0:33:42.04,0:33:43.13,Default,,0,0,0,,Móc treo trang trí.
Dialogue: 0,0:33:43.68,0:33:44.58,Default,,0,0,0,,Vị đại ca này.
Dialogue: 0,0:33:47.09,0:33:48.03,Default,,0,0,0,,Vị quan gia này,
Dialogue: 0,0:33:48.25,0:33:49.35,Default,,0,0,0,,có gì chỉ giáo?
Dialogue: 0,0:33:49.42,0:33:51.13,Default,,0,0,0,,Huynh nói quan gia gì?
Dialogue: 0,0:33:52.99,0:33:54.20,Default,,0,0,0,,Huynh nói ta à?
Dialogue: 0,0:33:54.42,0:33:55.91,Default,,0,0,0,,Ta không phải quan gia gì.
Dialogue: 0,0:33:56.34,0:33:58.68,Default,,0,0,0,,Ta thấy huynh hình như đang tìm đồ à?
Dialogue: 0,0:33:58.70,0:34:00.05,Default,,0,0,0,,Tiểu nhân vừa nãy bất cẩn,
Dialogue: 0,0:34:00.05,0:34:01.43,Default,,0,0,0,,quả thực làm mất ít đồ.
Dialogue: 0,0:34:01.90,0:34:03.23,Default,,0,0,0,,Nhưng mà không đáng bao tiền.
Dialogue: 0,0:34:03.23,0:34:04.15,Default,,0,0,0,,Chỉ là một cái hầu bao
Dialogue: 0,0:34:04.15,0:34:05.66,Default,,0,0,0,,mẹ ta thêu cho ta.
Dialogue: 0,0:34:06.19,0:34:08.49,Default,,0,0,0,,Không làm phiền quan gia nữa.
Dialogue: 0,0:34:08.67,0:34:09.56,Default,,0,0,0,,Huynh đợi đã.
Dialogue: 0,0:34:10.26,0:34:12.33,Default,,0,0,0,,Huynh xem, có phải cái này không?
Dialogue: 0,0:34:13.51,0:34:14.98,Default,,0,0,0,,Đúng là nó.
Dialogue: 0,0:34:15.61,0:34:16.42,Default,,0,0,0,,Đa tạ quan gia.
Dialogue: 0,0:34:16.44,0:34:17.37,Default,,0,0,0,,- Không có gì.\N- Đa tạ quan gia.
Dialogue: 0,0:34:17.37,0:34:18.28,Default,,0,0,0,,Huynh mau mở ra xem
Dialogue: 0,0:34:18.28,0:34:19.34,Default,,0,0,0,,có thiếu gì không.
Dialogue: 0,0:34:24.51,0:34:25.84,Default,,0,0,0,,Không thiếu gì.
Dialogue: 0,0:34:25.87,0:34:26.60,Default,,0,0,0,,Đa tạ quan gia.
Dialogue: 0,0:34:26.60,0:34:27.34,Default,,0,0,0,,Mau cất đi,
Dialogue: 0,0:34:27.43,0:34:28.37,Default,,0,0,0,,đừng làm mất nữa.
Dialogue: 0,0:34:28.39,0:34:28.91,Default,,0,0,0,,Được.
Dialogue: 0,0:34:34.21,0:34:34.74,Default,,0,0,0,,Đại ca,
Dialogue: 0,0:34:34.79,0:34:35.86,Default,,0,0,0,,đây là xe nước của huynh à?
Dialogue: 0,0:34:35.86,0:34:36.94,Default,,0,0,0,,Để ta giúp huynh.
Dialogue: 0,0:34:38.06,0:34:38.86,Default,,0,0,0,,Nào, nào, nào.
Dialogue: 0,0:34:40.38,0:34:41.18,Default,,0,0,0,,Đa tạ quan gia.
Dialogue: 0,0:34:41.23,0:34:42.13,Default,,0,0,0,,Không có gì.
Dialogue: 0,0:34:42.19,0:34:43.70,Default,,0,0,0,,Ta bán nước.
Dialogue: 0,0:34:45.31,0:34:46.31,Default,,0,0,0,,Bán nước.
Dialogue: 0,0:34:47.12,0:34:47.78,Default,,0,0,0,,Đại ca,
Dialogue: 0,0:34:47.86,0:34:50.30,Default,,0,0,0,,huynh có liên quan gì\Nđến phương Bắc không?
Dialogue: 0,0:34:51.05,0:34:52.57,Default,,0,0,0,,Ta chính là người phương Bắc.
Dialogue: 0,0:34:52.57,0:34:53.74,Default,,0,0,0,,Đại ca, huynh đợi đã,
Dialogue: 0,0:34:53.78,0:34:55.73,Default,,0,0,0,,ta hỏi huynh chút việc, nào.
Dialogue: 0,0:34:57.90,0:34:59.69,Default,,0,0,0,,Xe nước, phương Bắc.
Dialogue: 0,0:34:59.88,0:35:01.65,Default,,0,0,0,,Huynh thấy ta có quen không?
Dialogue: 0,0:35:01.86,0:35:02.61,Default,,0,0,0,,Có từng gặp
Dialogue: 0,0:35:02.61,0:35:03.82,Default,,0,0,0,,người nào nhìn giống ta không,
Dialogue: 0,0:35:03.82,0:35:04.78,Default,,0,0,0,,tên là Trần Cửu?
Dialogue: 0,0:35:07.39,0:35:08.16,Default,,0,0,0,,Quan gia,
Dialogue: 0,0:35:08.89,0:35:10.61,Default,,0,0,0,,nhìn ngài quả thực quen mặt.
Dialogue: 0,0:35:11.83,0:35:13.94,Default,,0,0,0,,Nhưng nhất thời
Dialogue: 0,0:35:14.35,0:35:15.83,Default,,0,0,0,,tiểu nhân không nhớ ra.
Dialogue: 0,0:35:17.71,0:35:18.42,Default,,0,0,0,,Cũng phải.
Dialogue: 0,0:35:19.69,0:35:22.09,Default,,0,0,0,,Chắc chắn là ta nhớ ca ca ta\Nđến phát điên rồi.
Dialogue: 0,0:35:22.46,0:35:24.42,Default,,0,0,0,,Không sao, huynh làm việc đi.
Dialogue: 0,0:35:25.14,0:35:25.69,Default,,0,0,0,,Hẹn gặp lại.
Dialogue: 0,0:35:25.69,0:35:26.68,Default,,0,0,0,,Ta đi đây.
Dialogue: 0,0:35:27.09,0:35:28.49,Default,,0,0,0,,Bán bánh nướng đây.
Dialogue: 0,0:35:30.17,0:35:31.30,Default,,0,0,0,,Bánh nướng đây.
Dialogue: 0,0:35:53.01,0:35:54.11,Default,,0,0,0,,Trần Thập,
Dialogue: 0,0:35:54.71,0:35:56.29,Default,,0,0,0,,ngươi như này không được.
Dialogue: 0,0:35:56.41,0:35:57.86,Default,,0,0,0,,Ta nói với ngươi rồi còn gì,
Dialogue: 0,0:35:57.86,0:35:59.28,Default,,0,0,0,,có người đánh lén sau lưng ngươi,
Dialogue: 0,0:35:59.28,0:36:00.46,Default,,0,0,0,,ngươi phải giơ cao gậy đánh đối thủ,
Dialogue: 0,0:36:00.46,0:36:01.31,Default,,0,0,0,,đầu gối tấn công ngực đối thủ.
Dialogue: 0,0:36:01.31,0:36:02.61,Default,,0,0,0,,Như vậy ngươi sẽ chế ngự được hắn.
Dialogue: 0,0:36:02.61,0:36:03.17,Default,,0,0,0,,Lại lần nữa.
Dialogue: 0,0:36:03.17,0:36:03.90,Default,,0,0,0,,Đừng.
Dialogue: 0,0:36:03.94,0:36:04.90,Default,,0,0,0,,Phục rồi.
Dialogue: 0,0:36:04.98,0:36:05.74,Default,,0,0,0,,Phục rồi.
Dialogue: 0,0:36:07.94,0:36:08.49,Default,,0,0,0,,Thất gia,
Dialogue: 0,0:36:08.51,0:36:08.98,Default,,0,0,0,,ta...
Dialogue: 0,0:36:09.45,0:36:10.64,Default,,0,0,0,,ta đã mua cho huynh
Dialogue: 0,0:36:10.86,0:36:12.78,Default,,0,0,0,,thịt xốt của Túy Tiên Cư,
Dialogue: 0,0:36:13.00,0:36:13.70,Default,,0,0,0,,còn có
Dialogue: 0,0:36:13.94,0:36:15.23,Default,,0,0,0,,điểm tâm của Tô Thắng Trai.
Dialogue: 0,0:36:15.23,0:36:15.86,Default,,0,0,0,,Này.
Dialogue: 0,0:36:18.51,0:36:20.59,Default,,0,0,0,,Canh ô mai của Đại Tứ Hỉ đâu?
Dialogue: 0,0:36:20.88,0:36:21.64,Default,,0,0,0,,Đúng thế.
Dialogue: 0,0:36:23.02,0:36:24.25,Default,,0,0,0,,Xin lỗi, ta quên mất.
Dialogue: 0,0:36:24.34,0:36:24.78,Default,,0,0,0,,Ta ở chỗ
Dialogue: 0,0:36:24.78,0:36:26.17,Default,,0,0,0,,Viên tiên sinh làm lỡ mất việc.
Dialogue: 0,0:36:26.17,0:36:26.61,Default,,0,0,0,,Ngươi xem,
Dialogue: 0,0:36:26.61,0:36:28.46,Default,,0,0,0,,ta đã nói đầu óc ngươi
Dialogue: 0,0:36:28.48,0:36:29.81,Default,,0,0,0,,quên trước quên sau.
Dialogue: 0,0:36:30.03,0:36:31.01,Default,,0,0,0,,Cho té lần nữa.
Dialogue: 0,0:36:31.09,0:36:32.17,Default,,0,0,0,,Đừng.
Dialogue: 0,0:36:32.17,0:36:32.98,Default,,0,0,0,,Thôi gia.
Dialogue: 0,0:36:33.14,0:36:34.75,Default,,0,0,0,,Còn của huynh nữa.
Dialogue: 0,0:36:36.95,0:36:38.31,Default,,0,0,0,,Giấy, nửa thếp giấy,
Dialogue: 0,0:36:38.34,0:36:39.34,Default,,0,0,0,,còn có bút và mực.
Dialogue: 0,0:36:39.64,0:36:40.36,Default,,0,0,0,,Đa tạ.
Dialogue: 0,0:36:49.75,0:36:51.01,Default,,0,0,0,,Còn giấy vàng cứng nữa.
Dialogue: 0,0:36:51.09,0:36:51.53,Default,,0,0,0,,Giấy.
Dialogue: 0,0:36:52.06,0:36:53.21,Default,,0,0,0,,Có giấy, huynh xem.
Dialogue: 0,0:36:53.35,0:36:55.61,Default,,0,0,0,,Giấy này còn trắng, lại rẻ nữa.
Dialogue: 0,0:36:55.96,0:36:58.16,Default,,0,0,0,,Giấy vàng cứng chuyên dùng để chép kinh.
Dialogue: 0,0:36:58.57,0:36:59.78,Default,,0,0,0,,Cái này...
Dialogue: 0,0:37:00.07,0:37:01.27,Default,,0,0,0,,Ta lại nhầm nữa rồi.
Dialogue: 0,0:37:01.38,0:37:02.18,Default,,0,0,0,,Cho té lần nữa.
Dialogue: 0,0:37:02.57,0:37:03.56,Default,,0,0,0,,Bắt đầu thôi.
Dialogue: 0,0:37:03.95,0:37:04.94,Default,,0,0,0,,Để sau nói.
Dialogue: 0,0:37:06.21,0:37:07.82,Default,,0,0,0,,Đây là vài đề bài ta trích từ
Dialogue: 0,0:37:07.82,0:37:08.95,Default,,0,0,0,,kinh Toán của Tôn Tử,
Dialogue: 0,0:37:09.49,0:37:10.22,Default,,0,0,0,,ngươi trả lời xong thì đưa ta.
Dialogue: 0,0:37:10.22,0:37:10.78,Default,,0,0,0,,Được.
Dialogue: 0,0:37:11.07,0:37:11.89,Default,,0,0,0,,Trần Thập,
Dialogue: 0,0:37:12.21,0:37:13.53,Default,,0,0,0,,số y phục luyện công này
Dialogue: 0,0:37:13.57,0:37:14.40,Default,,0,0,0,,bung chỉ rồi.
Dialogue: 0,0:37:14.57,0:37:16.38,Default,,0,0,0,,Ngươi khéo tay, vá cho cẩn thận,
Dialogue: 0,0:37:16.43,0:37:18.55,Default,,0,0,0,,để khi nào luyện truy bắt thì mặc.
Dialogue: 0,0:37:19.35,0:37:20.25,Default,,0,0,0,,Cũng được.
Dialogue: 0,0:37:21.11,0:37:23.11,Default,,0,0,0,,Còn đôi giày này của ta.
Dialogue: 0,0:37:24.66,0:37:25.78,Default,,0,0,0,,Làm phiền rồi.
Dialogue: 0,0:37:27.50,0:37:28.22,Default,,0,0,0,,Đều được.
Dialogue: 0,0:37:28.38,0:37:29.09,Default,,0,0,0,,Được.
Dialogue: 0,0:37:37.19,0:37:38.57,Default,,0,0,0,,Mệt chết ta mất.
Dialogue: 0,0:37:43.69,0:37:44.34,Default,,0,0,0,,Bính gia.
Dialogue: 0,0:37:47.98,0:37:48.73,Default,,0,0,0,,Bính gia.
Dialogue: 0,0:37:49.46,0:37:50.49,Default,,0,0,0,,Vụ án Nhất Chi Hoa
Dialogue: 0,0:37:50.51,0:37:51.64,Default,,0,0,0,,điều tra đến đâu rồi?
Dialogue: 0,0:37:53.25,0:37:54.46,Default,,0,0,0,,Ta xem lại một lượt hồ sơ vụ án
Dialogue: 0,0:37:54.46,0:37:55.46,Default,,0,0,0,,trong mật các rồi.
Dialogue: 0,0:37:56.06,0:37:56.88,Default,,0,0,0,,Theo lý mà nói,
Dialogue: 0,0:37:56.90,0:37:57.90,Default,,0,0,0,,hắn từng vào ngục,
Dialogue: 0,0:37:58.05,0:37:59.58,Default,,0,0,0,,hành sự lại quái đản như vậy,
Dialogue: 0,0:37:59.65,0:38:00.96,Default,,0,0,0,,nên để lại dấu vết gì đó.
Dialogue: 0,0:38:02.10,0:38:04.50,Default,,0,0,0,,Nhưng mà đến một chút manh mối\Ncũng không có.
Dialogue: 0,0:38:04.84,0:38:06.80,Default,,0,0,0,,Vậy ta có thể giúp gì không?
Dialogue: 0,0:38:09.09,0:38:09.82,Default,,0,0,0,,Giúp gì?
Dialogue: 0,0:38:11.64,0:38:13.50,Default,,0,0,0,,Hai hôm nay ta ở trong mật các suốt,
Dialogue: 0,0:38:14.23,0:38:15.36,Default,,0,0,0,,học hành thế nào rồi?
Dialogue: 0,0:38:15.73,0:38:16.79,Default,,0,0,0,,Họ dạy thế nào?
Dialogue: 0,0:38:17.05,0:38:17.94,Default,,0,0,0,,Họ
Dialogue: 0,0:38:19.01,0:38:19.78,Default,,0,0,0,,khá tốt.
Dialogue: 0,0:38:21.33,0:38:22.19,Default,,0,0,0,,Ta...
Dialogue: 0,0:38:22.20,0:38:22.91,Default,,0,0,0,,Vậy thì tốt.
Dialogue: 0,0:38:26.74,0:38:27.36,Default,,0,0,0,,Bính gia,
Dialogue: 0,0:38:27.37,0:38:28.87,Default,,0,0,0,,lúc trước ngài nói với ta
Dialogue: 0,0:38:28.91,0:38:29.61,Default,,0,0,0,,giúp ta tìm ca ca ta...
Dialogue: 0,0:38:29.61,0:38:30.34,Default,,0,0,0,,Thiếu khanh.
Dialogue: 0,0:38:30.78,0:38:31.91,Default,,0,0,0,,Sao lại theo đến đây?
Dialogue: 0,0:38:31.98,0:38:32.42,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:38:32.45,0:38:33.18,Default,,0,0,0,,Thiếu khanh.
Dialogue: 0,0:38:34.02,0:38:34.77,Default,,0,0,0,,Đây là...
Dialogue: 0,0:38:34.89,0:38:36.29,Default,,0,0,0,,Thiếu khanh, có vụ án rồi.
Dialogue: 0,0:38:39.39,0:38:39.94,Default,,0,0,0,,Vụ án.
Dialogue: 0,0:38:40.38,0:38:42.66,Default,,0,0,0,,[Bến đò Tân Đàm]
Dialogue: 0,0:38:41.22,0:38:41.95,Default,,0,0,0,,Thiếu khanh.
Dialogue: 0,0:38:42.02,0:38:42.78,Default,,0,0,0,,người nhà ta
Dialogue: 0,0:38:42.78,0:38:44.00,Default,,0,0,0,,lo lắng ta giật gấu vá vai
Dialogue: 0,0:38:44.00,0:38:45.44,Default,,0,0,0,,nên gửi cho ta ít tiền.
Dialogue: 0,0:38:45.67,0:38:46.72,Default,,0,0,0,,Ta vừa đến bến tàu
Dialogue: 0,0:38:46.75,0:38:48.82,Default,,0,0,0,,mới phát hiện mọi người đổ xô ra đó.
Dialogue: 0,0:38:49.27,0:38:51.06,Default,,0,0,0,,Ta vốn tưởng thuyền buôn đến,
Dialogue: 0,0:38:51.08,0:38:52.66,Default,,0,0,0,,đem theo đồ hiếm gì đó,
Dialogue: 0,0:38:52.67,0:38:54.47,Default,,0,0,0,,những người đó mới nóng lòng muốn thử,
Dialogue: 0,0:38:54.47,0:38:55.36,Default,,0,0,0,,tranh nhau xem trước,
Dialogue: 0,0:38:55.36,0:38:56.99,Default,,0,0,0,,nên ta cũng muốn đi xem.
Dialogue: 0,0:38:57.01,0:38:58.47,Default,,0,0,0,,Nhưng nhiều người quá,
Dialogue: 0,0:38:58.50,0:38:59.71,Default,,0,0,0,,chen chúc lẫn nhau,
Dialogue: 0,0:38:59.73,0:39:00.99,Default,,0,0,0,,mất thời gian một nén hương
Dialogue: 0,0:39:00.99,0:39:02.40,Default,,0,0,0,,vẫn chưa ngoi được lên phía trước.
Dialogue: 0,0:39:02.40,0:39:04.00,Default,,0,0,0,,Nên ta trong cái khó ló cái khôn,
Dialogue: 0,0:39:04.00,0:39:05.38,Default,,0,0,0,,giơ lệnh bài của Đại Lý Tự ra.
Dialogue: 0,0:39:05.38,0:39:06.37,Default,,0,0,0,,Sau đó đám đông giải tán,
Dialogue: 0,0:39:06.37,0:39:07.63,Default,,0,0,0,,ngươi nhìn thấy gì rồi?
Dialogue: 0,0:39:08.13,0:39:09.42,Default,,0,0,0,,Không, mọi người vẫn chưa giải tán.
Dialogue: 0,0:39:09.42,0:39:10.61,Default,,0,0,0,,Ta không cần biết họ có giải tán không,
Dialogue: 0,0:39:10.61,0:39:11.53,Default,,0,0,0,,mau nói đúng trọng tâm.
Dialogue: 0,0:39:11.53,0:39:12.71,Default,,0,0,0,,Nói rõ trong một câu.
Dialogue: 0,0:39:14.05,0:39:15.22,Default,,0,0,0,,Miếu Long Vương bên cạnh bến tàu
Dialogue: 0,0:39:15.22,0:39:16.32,Default,,0,0,0,,xảy ra án mạng,
Dialogue: 0,0:39:16.40,0:39:17.72,Default,,0,0,0,,vụ án vô cùng ly kỳ.
Dialogue: 0,0:39:17.86,0:39:19.19,Default,,0,0,0,,Người của Hình bộ đến rồi
Dialogue: 0,0:39:19.30,0:39:20.21,Default,,0,0,0,,nên ta mới mau chóng về
Dialogue: 0,0:39:20.21,0:39:21.34,Default,,0,0,0,,bẩm báo thiếu khanh.
Dialogue: 0,0:39:23.85,0:39:24.47,Default,,0,0,0,,Bên này.
Dialogue: 0,0:39:34.26,0:39:35.04,Default,,0,0,0,,Trần Thập tiểu ca,
Dialogue: 0,0:39:35.04,0:39:36.32,Default,,0,0,0,,đây là lần đầu tiên\Nngươi ra hiện trường vụ án
Dialogue: 0,0:39:36.32,0:39:37.81,Default,,0,0,0,,kể từ sau khi đến Đại Lý Tự,
Dialogue: 0,0:39:37.83,0:39:38.92,Default,,0,0,0,,phải vững vàng chút.
Dialogue: 0,0:39:38.92,0:39:40.42,Default,,0,0,0,,Có mặt Phùng thị lang của Hình bộ,
Dialogue: 0,0:39:40.42,0:39:42.10,Default,,0,0,0,,đừng làm Minh Kính Đường\Nchúng ta mất mặt.
Dialogue: 0,0:39:42.10,0:39:42.74,Default,,0,0,0,,Được.
Dialogue: 0,0:39:43.28,0:39:54.10,Default,,0,0,0,,[Miếu Long Vương]
Dialogue: 0,0:39:55.79,0:39:56.68,Default,,0,0,0,,Lý thiếu khanh.
Dialogue: 0,0:39:57.49,0:39:58.54,Default,,0,0,0,,Sao ngài đến đây?
Dialogue: 0,0:39:58.66,0:39:59.42,Default,,0,0,0,,Nghe tin miếu Long Vương
Dialogue: 0,0:39:59.42,0:40:00.42,Default,,0,0,0,,có một vụ án ly kỳ
Dialogue: 0,0:40:00.57,0:40:01.45,Default,,0,0,0,,nên đến xem
Dialogue: 0,0:40:01.47,0:40:03.13,Default,,0,0,0,,Đại Lý Tự có giúp được gì không.
Dialogue: 0,0:40:03.34,0:40:04.74,Default,,0,0,0,,Từ lâu đã nghe nói thiếu khanh
Dialogue: 0,0:40:04.74,0:40:06.51,Default,,0,0,0,,trước giờ chuyên phá kỳ án,
Dialogue: 0,0:40:06.78,0:40:08.22,Default,,0,0,0,,quả nhiên là vậy.
Dialogue: 0,0:40:08.86,0:40:11.34,Default,,0,0,0,,Vụ án viên ngoại lang lúc trước
Dialogue: 0,0:40:11.49,0:40:13.33,Default,,0,0,0,,cũng may có thiếu khanh
Dialogue: 0,0:40:13.43,0:40:14.90,Default,,0,0,0,,dốc sức thẩm tra rà soát
Dialogue: 0,0:40:15.13,0:40:17.07,Default,,0,0,0,,mới làm rõ ngọn nguồn.
Dialogue: 0,0:40:17.21,0:40:17.98,Default,,0,0,0,,Nếu không
Dialogue: 0,0:40:18.21,0:40:19.98,Default,,0,0,0,,người đồng cấp với chúng ta chịu oan,
Dialogue: 0,0:40:19.98,0:40:21.26,Default,,0,0,0,,Hình bộ bọn ta
Dialogue: 0,0:40:21.65,0:40:22.98,Default,,0,0,0,,không biết phải nói sao.
Dialogue: 0,0:40:23.46,0:40:25.24,Default,,0,0,0,,Hình bộ và Đại Lý Tự hỗ trợ lẫn nhau,
Dialogue: 0,0:40:25.24,0:40:26.36,Default,,0,0,0,,đều là bổn phận nên làm.
Dialogue: 0,0:40:26.36,0:40:27.76,Default,,0,0,0,,Ngài không cần khách sáo.
Dialogue: 0,0:40:27.76,0:40:28.42,Default,,0,0,0,,Thiếu khanh
Dialogue: 0,0:40:28.63,0:40:30.29,Default,,0,0,0,,thực sự nói quá hay.
Dialogue: 0,0:40:30.71,0:40:32.16,Default,,0,0,0,,Đại Lý Tự và Hình bộ
Dialogue: 0,0:40:32.19,0:40:33.94,Default,,0,0,0,,vốn gắn kết chặt chẽ,
Dialogue: 0,0:40:34.14,0:40:36.68,Default,,0,0,0,,về lý nên chiếu cố,\Ntrao đổi thông tin nhiều hơn,
Dialogue: 0,0:40:36.68,0:40:38.14,Default,,0,0,0,,trợ giúp thúc đẩy lẫn nhau.
Dialogue: 0,0:40:38.82,0:40:41.33,Default,,0,0,0,,Giờ đây thiếu khanh có thể quay lại
Dialogue: 0,0:40:41.53,0:40:42.92,Default,,0,0,0,,vực dậy nền nếp,
Dialogue: 0,0:40:43.40,0:40:45.29,Default,,0,0,0,,đối với Đại Lý Tự và Hình bộ
Dialogue: 0,0:40:45.46,0:40:47.01,Default,,0,0,0,,đều là chuyện tốt.
Dialogue: 0,0:40:47.69,0:40:48.89,Default,,0,0,0,,Thiếu khanh, mời xem.
Dialogue: 0,0:40:57.78,0:40:58.93,Default,,0,0,0,,Bộ dạng thi thể
Dialogue: 0,0:40:58.95,0:41:00.35,Default,,0,0,0,,vì sao lại quái dị như này?
Dialogue: 0,0:41:03.79,0:41:04.94,Default,,0,0,0,,[Đại Lý Tự]
