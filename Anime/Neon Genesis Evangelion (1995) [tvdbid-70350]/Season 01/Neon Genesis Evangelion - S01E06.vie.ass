Dialogue: 0,0:01:33.10,0:01:35.56,TVevaTNR,,0000,0000,0000,,Phát hiện phản ứng năng lượng \Nrất cao bên trong mục tiêu!
Dialogue: 0,0:01:35.56,0:01:36.47,TVevaTNR,,0000,0000,0000,,Cái gì?!
Dialogue: 0,0:01:36.47,0:01:37.07,TVevaTNR,,0000,0000,0000,,Nó đang gia tăng\N và tích hợp lại.
Dialogue: 0,0:01:37.07,0:01:38.87,TVevaTNR,,0000,0000,0000,,Nó đang gia tăng\N và tích hợp lại.
Dialogue: 0,0:01:38.87,0:01:40.36,TVevaTNR,,0000,0000,0000,,Chẳng lẽ là...
Dialogue: 0,0:01:46.44,0:01:47.93,TVevaTNR,,0000,0000,0000,,Không được, tránh ngay đi!
Dialogue: 0,0:01:55.99,0:01:57.98,TVevaTNR,,0000,0000,0000,,Thu hồi nó nhanh!
Dialogue: 0,0:02:03.56,0:02:05.29,TVevaTNR,,0000,0000,0000,,Mục tiêu đã bất động!
Dialogue: 0,0:02:05.29,0:02:06.40,TVevaTNR,,0000,0000,0000,,Shinji-kun sao rồi ?
Dialogue: 0,0:02:06.40,0:02:07.76,TVevaTNR,,0000,0000,0000,,Cậu ta còn sống!
Dialogue: 0,0:02:07.76,0:02:10.60,TVevaTNR,,0000,0000,0000,,{\i1}Unit 01 đã được thu hồi.{\i0}\N{\i1}Chuyển đến khoang 07.{\i0}
Dialogue: 0,0:02:10.60,0:02:12.62,TVevaTNR,,0000,0000,0000,,Tớ sẽ xuống xem thế nào.\NTrông chừng hộ tớ!
Dialogue: 0,0:02:15.70,0:02:17.47,TVevaTNR,,0000,0000,0000,,{\i1}Unit 01 đã được cố định!{\i0}
Dialogue: 0,0:02:18.94,0:02:21.24,TVevaTNR,,0000,0000,0000,,Sóng não của phi công rất hỗn loạn!
Dialogue: 0,0:02:21.24,0:02:22.65,TVevaTNR,,0000,0000,0000,,Mạch đập rất yếu.
Dialogue: 0,0:02:22.65,0:02:26.05,TVevaTNR,,0000,0000,0000,,Tăng mức hỗ trợ sinh mệnh.\NBắt đầu xoa bóp tim.
Dialogue: 0,0:02:26.05,0:02:27.98,TVevaTNR,,0000,0000,0000,,Rõ!
Dialogue: 0,0:02:27.98,0:02:29.29,TVevaTNR,,0000,0000,0000,,Mạch đã đập lại!
Dialogue: 0,0:02:29.29,0:02:31.41,TVevaTNR,,0000,0000,0000,,Cưỡng chế tháo\N Entry Plug! Nhanh lên!
Dialogue: 0,0:02:35.09,0:02:36.83,TVevaTNR,,0000,0000,0000,,Thải LCL ra!
Dialogue: 0,0:02:36.83,0:02:38.63,TVevaTNR,,0000,0000,0000,,Rõ!
Dialogue: 0,0:02:38.63,0:02:40.60,TVevaTNR,,0000,0000,0000,,Mở cửa sập ra! Nhanh lên!
Dialogue: 0,0:02:50.17,0:02:51.66,TVevaTNR,,0000,0000,0000,,Shinji-kun!
Dialogue: 0,0:03:17.30,0:03:20.70,TVevaTNR,,0000,0000,0000,,Tập 6:\NTrận quyết chiến ở Tokyo-3
Dialogue: 0,0:03:26.30,0:03:28.00,TVevaTNR,,0000,0000,0000,,{\i1}Hình nhân tỷ lệ 1:1{\i0}
Dialogue: 0,0:03:34.68,0:03:36.72,TVevaTNR,,0000,0000,0000,,{\i1}Đại pháo chùm hạt gia tốc{\i0}\N{\i1}của mục tiêu đã bắn trúng đích!{\i0}
Dialogue: 0,0:03:36.72,0:03:38.32,TVevaTNR,,0000,0000,0000,,{\i1}Mồi nhử bị tiêu diệt!{\i0}
Dialogue: 0,0:03:38.32,0:03:39.81,TVevaTNR,,0000,0000,0000,,Tiếp.
Dialogue: 0,0:03:41.80,0:03:45.00,TVevaTNR,,0000,0000,0000,,{\i1}Đại bác tự động loại 12.{\i0}
Dialogue: 0,0:03:52.84,0:03:55.00,TVevaTNR,,0000,0000,0000,,{\i1}Đại bác loại 12{\i0}\N{\i1}bị tiêu diệt!{\i0}
Dialogue: 0,0:03:56.21,0:03:57.43,TVevaTNR,,0000,0000,0000,,Ra thế.
Dialogue: 0,0:03:58.61,0:04:02.65,TVevaTNR,,0000,0000,0000,,Theo dữ liệu thu được,\Nchúng tôi cho rằng con Angel đó
Dialogue: 0,0:04:02.65,0:04:05.75,TVevaTNR,,0000,0000,0000,,tự động tấn công bất kỳ\Nđối tượng nào trong tầm bắn.
Dialogue: 0,0:04:05.75,0:04:10.49,TVevaTNR,,0000,0000,0000,,Mọi thứ đi vào khoảng cách đó \Nđều bị coi là mục tiêu.
Dialogue: 0,0:04:10.49,0:04:14.09,TVevaTNR,,0000,0000,0000,,Cho Eva đánh cận chiến là quá nguy hiểm.
Dialogue: 0,0:04:14.09,0:04:15.76,TVevaTNR,,0000,0000,0000,,Màn AT-Field thì thế nào?
Dialogue: 0,0:04:15.76,0:04:16.79,TVevaTNR,,0000,0000,0000,,Vẫn đang kích hoạt.
Dialogue: 0,0:04:16.79,0:04:21.02,TVevaTNR,,0000,0000,0000,,Đủ mạnh để uốn cả không gian.
Dialogue: 0,0:04:22.57,0:04:26.10,TVevaTNR,,0000,0000,0000,,Dùng cách tấn công thông thường,\Ntên lửa đạn đạo, pháo binh, bom,
Dialogue: 0,0:04:26.10,0:04:28.40,TVevaTNR,,0000,0000,0000,,chúng ta còn thiệt hại hơn nó nhiều!
Dialogue: 0,0:04:28.40,0:04:33.21,TVevaTNR,,0000,0000,0000,,Công - thủ toàn diện.\NNhư một pháo đài bay ấy nhỉ?
Dialogue: 0,0:04:33.21,0:04:35.41,TVevaTNR,,0000,0000,0000,,Thế tình hình mũi khoan thế nào?
Dialogue: 0,0:04:35.41,0:04:37.65,TVevaTNR,,0000,0000,0000,,Vào lúc này nó đang\N nằm ngay trên chúng ta,
Dialogue: 0,0:04:37.65,0:04:40.58,TVevaTNR,,0000,0000,0000,,tiến vào Tokyo 3 khu vực Zero.
Dialogue: 0,0:04:40.58,0:04:43.52,TVevaTNR,,0000,0000,0000,,Mũi khoan khổng lồ với đường kính 17.5 mét
Dialogue: 0,0:04:43.52,0:04:46.32,TVevaTNR,,0000,0000,0000,,đang khoan xuống tổng bộ NERV.
Dialogue: 0,0:04:47.86,0:04:52.03,TVevaTNR,,0000,0000,0000,,Kẻ địch định tấn công trực tiếp\Nvào tổng bộ NERV.
Dialogue: 0,0:04:52.03,0:04:53.93,TVevaTNR,,0000,0000,0000,,Láo thật!
Dialogue: 0,0:04:53.93,0:04:56.30,TVevaTNR,,0000,0000,0000,,Thế khi nào nó khoan tới nơi?
Dialogue: 0,0:04:56.30,0:05:00.24,TVevaTNR,,0000,0000,0000,,Vào 0 giờ 6 phút 14 giây.
Dialogue: 0,0:05:00.24,0:05:03.94,TVevaTNR,,0000,0000,0000,,Lúc đó nó sẽ khoan \Nhết 22 lớp bảo vệ,
Dialogue: 0,0:05:03.94,0:05:06.27,TVevaTNR,,0000,0000,0000,,và tiến tới tổng bộ NERV.
Dialogue: 0,0:05:07.94,0:05:09.74,TVevaTNR,,0000,0000,0000,,Chưa đến 10 tiếng nữa...
Dialogue: 0,0:05:15.18,0:05:18.09,TVevaTNR,,0000,0000,0000,,Mũi khoan đã chạm đến \Nlớp bảo vệ thứ nhất.
Dialogue: 0,0:05:18.09,0:05:20.72,TVevaTNR,,0000,0000,0000,,Tình trạng Unit 01 thế nào?
Dialogue: 0,0:05:20.72,0:05:24.53,TVevaTNR,,0000,0000,0000,,Giáp bảo vệ bị tan chảy đến lớp thứ 3.
Dialogue: 0,0:05:24.53,0:05:28.66,TVevaTNR,,0000,0000,0000,,May là trung tâm điều\N khiển chưa bị thiệt hại.
Dialogue: 0,0:05:28.66,0:05:32.07,TVevaTNR,,0000,0000,0000,,Chỉ thêm 3 giây nữa là hỏng việc.
Dialogue: 0,0:05:32.07,0:05:35.74,TVevaTNR,,0000,0000,0000,,Hoàn tất thay giáp sẽ mất 3 tiếng.
Dialogue: 0,0:05:35.74,0:05:37.11,TVevaTNR,,0000,0000,0000,,Rõ.
Dialogue: 0,0:05:37.11,0:05:38.37,TVevaTNR,,0000,0000,0000,,Tình trạng Unit 00 thế nào?
Dialogue: 0,0:05:38.37,0:05:40.84,TVevaTNR,,0000,0000,0000,,Tái kích hoạt thì không vấn đề,
Dialogue: 0,0:05:40.84,0:05:43.48,TVevaTNR,,0000,0000,0000,,nhưng vẫn có phản hồi báo lỗi.
Dialogue: 0,0:05:43.48,0:05:44.55,TVevaTNR,,0000,0000,0000,,Nếu thực chiến thì...
Dialogue: 0,0:05:44.55,0:05:46.72,TVevaTNR,,0000,0000,0000,,...vẫn không được sao?
Dialogue: 0,0:05:46.72,0:05:49.39,TVevaTNR,,0000,0000,0000,,Tình trạng phi công\NUnit 01 thế nào?
Dialogue: 0,0:05:49.39,0:05:51.15,TVevaTNR,,0000,0000,0000,,Không có tổn thương vật lý.
Dialogue: 0,0:05:51.15,0:05:54.29,TVevaTNR,,0000,0000,0000,,Xung thần kinh tăng lên 0.8.
Dialogue: 0,0:05:54.29,0:05:56.63,TVevaTNR,,0000,0000,0000,,Vẫn ở mức cho phép.
Dialogue: 0,0:05:56.63,0:06:00.76,TVevaTNR,,0000,0000,0000,,{\i1}Kẻ thù tiếp cận trong:{\i0}\N{\i1}9 giờ, 55 phút.{\i0}
Dialogue: 0,0:06:00.76,0:06:03.03,TVevaTNR,,0000,0000,0000,,Tình hình không tốt rồi nhỉ!
Dialogue: 0,0:06:03.03,0:06:05.20,TVevaTNR,,0000,0000,0000,,Chúng ta không giơ\N cờ trắng đầu hàng cho rồi đi ạ.
Dialogue: 0,0:06:05.20,0:06:06.40,TVevaTNR,,0000,0000,0000,,Trước khi dùng cách đó,
Dialogue: 0,0:06:06.40,0:06:08.87,TVevaTNR,,0000,0000,0000,,tôi vẫn muốn thử vài thứ.
Dialogue: 0,0:06:10.27,0:06:14.48,TVevaTNR,,0000,0000,0000,,Cô muốn nhắm tỉa mục\N tiêu xa ngoài tầm bắn của nó?
Dialogue: 0,0:06:14.48,0:06:15.41,TVevaTNR,,0000,0000,0000,,Vâng.
Dialogue: 0,0:06:15.41,0:06:17.81,TVevaTNR,,0000,0000,0000,,Thay vì vô hiệu hóa \NAT field của kẻ địch,
Dialogue: 0,0:06:17.81,0:06:21.55,TVevaTNR,,0000,0000,0000,,Tôi tin một phát trực diện với\N cường độ mạnh là cách duy nhất.
Dialogue: 0,0:06:21.55,0:06:23.09,TVevaTNR,,0000,0000,0000,,Magi nói sao?
Dialogue: 0,0:06:23.09,0:06:25.52,TVevaTNR,,0000,0000,0000,,Phản hồi từ siêu máy tính Magi
Dialogue: 0,0:06:25.52,0:06:28.99,TVevaTNR,,0000,0000,0000,,là hai chấp thuận và \Nmột chấp thuận có điều kiện.
Dialogue: 0,0:06:28.99,0:06:32.06,TVevaTNR,,0000,0000,0000,,Khả năng thành công là 8.7%.
Dialogue: 0,0:06:32.06,0:06:34.43,TVevaTNR,,0000,0000,0000,,Kết quả cao nhất chúng ta có.
Dialogue: 0,0:06:34.43,0:06:39.17,TVevaTNR,,0000,0000,0000,,Không có lý do gì để từ chối kế hoạch.\NCô được cho phép, Đại úy.
Dialogue: 0,0:06:39.17,0:06:40.90,TVevaTNR,,0000,0000,0000,,Vâng.
Dialogue: 0,0:06:40.90,0:06:44.07,TVevaTNR,,0000,0000,0000,,Cậu có biết kế hoạch đó \Nđiên rồ thế nào không,
Dialogue: 0,0:06:44.07,0:06:45.87,TVevaTNR,,0000,0000,0000,,Chỉ đạo chiến thuật, Katsuragi?
Dialogue: 0,0:06:45.87,0:06:48.24,TVevaTNR,,0000,0000,0000,,Đừng chọc tớ, nghe\N cũng đâu điên lắm đâu!
Dialogue: 0,0:06:48.24,0:06:50.61,TVevaTNR,,0000,0000,0000,,Kế hoạch có thể thực \Nhiện trong 9 tiếng còn lại,
Dialogue: 0,0:06:50.61,0:06:52.95,TVevaTNR,,0000,0000,0000,,và có khả năng cao nhất.
Dialogue: 0,0:06:52.95,0:06:55.38,TVevaTNR,,0000,0000,0000,,Thật sao?
Dialogue: 0,0:06:55.38,0:06:59.46,TVevaTNR,,0000,0000,0000,,Nhưng súng positron của ta \Nkhông thể chịu được hiệu suất quá cao.
Dialogue: 0,0:06:59.46,0:07:00.52,TVevaTNR,,0000,0000,0000,,Cậu định làm sao?
Dialogue: 0,0:07:00.52,0:07:03.29,TVevaTNR,,0000,0000,0000,,Dĩ nhiên phải đi mượn rồi.
Dialogue: 0,0:07:03.29,0:07:06.16,TVevaTNR,,0000,0000,0000,,Mượn? Ý cậu là...
Dialogue: 0,0:07:07.26,0:07:09.42,TVevaTNR,,0000,0000,0000,,Phải! Nguyên mẫu của phòng \Nthí nghiệm bên lực lượng tự vệ!
Dialogue: 0,0:07:11.23,0:07:16.14,TVevaTNR,,0000,0000,0000,,Kể từ lúc này NERV sẽ trưng\N dụng khẩu Positron tự động này...
Dialogue: 0,0:07:16.14,0:07:18.87,TVevaTNR,,0000,0000,0000,,vào 15:00 hôm nay.
Dialogue: 0,0:07:18.87,0:07:22.11,TVevaTNR,,0000,0000,0000,,Nhưng chuyện này thật lố bịch!
Dialogue: 0,0:07:22.11,0:07:27.22,TVevaTNR,,0000,0000,0000,,Chúng tôi sẽ cố gắng hoàn trả trong \Ntình trạng nguyên vẹn.
Dialogue: 0,0:07:27.22,0:07:30.69,TVevaTNR,,0000,0000,0000,,Cảm ơn vì sự hợp tác.
Dialogue: 0,0:07:30.69,0:07:33.18,TVevaTNR,,0000,0000,0000,,Được rồi, Rei! Mang nó đi!
Dialogue: 0,0:07:36.53,0:07:39.12,TVevaTNR,,0000,0000,0000,,Đồ dễ vỡ nên cẩn thận nhé!
Dialogue: 0,0:07:42.00,0:07:46.20,TVevaTNR,,0000,0000,0000,,Nhưng theo tính toán của chúng tôi thì...
Dialogue: 0,0:07:46.20,0:07:49.00,TVevaTNR,,0000,0000,0000,,cần ít nhất 180 triệu ki-lô-oát\Nđể phá thủng AT field đó.
Dialogue: 0,0:07:49.00,0:07:52.13,TVevaTNR,,0000,0000,0000,,Cô định kiếm đâu \Nra số năng lượng đó?
Dialogue: 0,0:07:53.14,0:07:56.08,TVevaTNR,,0000,0000,0000,,Đơn giản thôi. Từ toàn bộ Nhật Bản.
Dialogue: 0,0:07:58.45,0:08:00.25,TVevaTNR,,0000,0000,0000,,{\i1}Xin lỗi vì sự gián đoạn{\i0}
Dialogue: 0,0:08:00.25,0:08:03.29,TVevaTNR,,0000,0000,0000,,{\i1}chúng tôi có thông báo khẩn cấp.\N{\i1}
Dialogue: 0,0:08:03.29,0:08:06.09,TVevaTNR,,0000,0000,0000,,{\i1}Từ 11:30 tối nay đến sáng mai,{\i0}
Dialogue: 0,0:08:06.09,0:08:08.92,TVevaTNR,,0000,0000,0000,,{\i1}sẽ có đợt cắt điện trên diện rộng{\i0}
Dialogue: 0,0:08:08.92,0:08:10.33,TVevaTNR,,0000,0000,0000,,{\i1}trên toàn Nhật Bản.{\i0}
Dialogue: 0,0:08:10.33,0:08:13.53,TVevaTNR,,0000,0000,0000,,{\i1}Cảm ơn mọi người đã hợp tác.{\i0}
Dialogue: 0,0:08:13.53,0:08:19.60,TVevaTNR,,0000,0000,0000,,{\i1}Xin nhắc lại, từ 11:30 tối nay đến sáng mai,{\i0}
Dialogue: 0,0:08:19.60,0:08:22.17,TVevaTNR,,0000,0000,0000,,{\i1}sẽ có đợt cắt điện trên diện rộng{\i0}\N{\i1}trên toàn Nhật Bản.{\i0}
Dialogue: 0,0:08:22.17,0:08:25.11,TVevaTNR,,0000,0000,0000,,{\i1}Cảm ơn mọi người đã hợp tác.{\i0}
Dialogue: 0,0:08:29.65,0:08:32.48,TVevaTNR,,0000,0000,0000,,{\i1}Mũi khoan đã đi qua lớp bảo vệ thứ 7{\i0}
Dialogue: 0,0:08:32.48,0:08:34.82,TVevaTNR,,0000,0000,0000,,Tình trạng tiếp tế năng lượng thế nào?
Dialogue: 0,0:08:34.82,0:08:40.56,TVevaTNR,,0000,0000,0000,,Trễ 3.2% so với dự tính,\N nhưng chúng ta sẽ hoàn thành vào 23:10.
Dialogue: 0,0:08:40.56,0:08:42.29,TVevaTNR,,0000,0000,0000,,Còn khẩu positron?
Dialogue: 0,0:08:42.29,0:08:44.93,TVevaTNR,,0000,0000,0000,,Bằng danh dự của Bộ phận\Nphát triển kỹ thuật phân khu 3,
Dialogue: 0,0:08:44.93,0:08:47.93,TVevaTNR,,0000,0000,0000,,chúng tôi sẽ lắp ráp nó\Nxong trong 3 tiếng.
Dialogue: 0,0:08:47.93,0:08:49.30,TVevaTNR,,0000,0000,0000,,Còn khoản phòng thủ thì sao?
Dialogue: 0,0:08:49.30,0:08:52.60,TVevaTNR,,0000,0000,0000,,Chỉ còn cách dùng khiên thôi.
Dialogue: 0,0:08:52.60,0:08:54.64,TVevaTNR,,0000,0000,0000,,Đây là khiên sao ạ?
Dialogue: 0,0:08:54.64,0:08:58.01,TVevaTNR,,0000,0000,0000,,Ừ. Từng là một phần \N tên lửa xuyên lục địa.
Dialogue: 0,0:08:58.01,0:09:03.41,TVevaTNR,,0000,0000,0000,,Trông có vẻ xấu,\N nhưng nó có phủ một lớp điện từ
Dialogue: 0,0:09:03.41,0:09:06.45,TVevaTNR,,0000,0000,0000,,Phân khu 2 đảm bảo nó sẽ chịu được \Ncông kích của kẻ địch...
Dialogue: 0,0:09:06.45,0:09:07.92,TVevaTNR,,0000,0000,0000,,ít nhất 17 giây.
Dialogue: 0,0:09:07.92,0:09:10.72,TVevaTNR,,0000,0000,0000,,Tốt. Đã tìm được chỗ ngắm chưa?
Dialogue: 0,0:09:10.72,0:09:12.86,TVevaTNR,,0000,0000,0000,,Theo vị trí của mục tiêu,\Nđặc điểm địa hình và...
Dialogue: 0,0:09:12.86,0:09:16.56,TVevaTNR,,0000,0000,0000,,đường dẫn năng lượng thì \Nđây là điểm tốt nhất.
Dialogue: 0,0:09:16.56,0:09:19.70,TVevaTNR,,0000,0000,0000,,Trông được đấy.
Dialogue: 0,0:09:19.70,0:09:22.20,TVevaTNR,,0000,0000,0000,,Điểm tấn công là trên đỉnh Futago!
Dialogue: 0,0:09:22.20,0:09:25.33,TVevaTNR,,0000,0000,0000,,Chiến dịch sẽ bắt đầu\N vào 00:00 sáng mai!
Dialogue: 0,0:09:25.33,0:09:28.44,TVevaTNR,,0000,0000,0000,,Từ giờ sẽ gọi đây là \N"Chiến dịch Yashima".
Dialogue: 0,0:09:28.44,0:09:29.87,TVevaTNR,,0000,0000,0000,,Rõ.
Dialogue: 0,0:09:29.87,0:09:31.90,TVevaTNR,,0000,0000,0000,,Giờ vấn đề còn lại là phi công.
Dialogue: 0,0:09:46.26,0:09:48.62,TVevaTNR,,0000,0000,0000,,Phi công của Unit 01 đã tỉnh lại.
Dialogue: 0,0:09:48.62,0:09:50.66,TVevaTNR,,0000,0000,0000,,Kết quả kiểm tra bình thường.
Dialogue: 0,0:09:50.66,0:09:54.70,TVevaTNR,,0000,0000,0000,,Tốt. Vậy chiến dịch sẽ tiến hành như kế hoạch.
Dialogue: 0,0:09:54.70,0:09:55.86,TVevaTNR,,0000,0000,0000,,Rõ.
Dialogue: 0,0:09:55.86,0:09:58.03,TVevaTNR,,0000,0000,0000,,Không biết cậu ấy có lái nữa không.
Dialogue: 0,0:09:59.10,0:10:00.66,TVevaTNR,,0000,0000,0000,,Lên núi Futago thôi!
Dialogue: 0,0:10:00.66,0:10:04.18,TVevaTNR,,0000,0000,0000,,{\i1}Bệnh viện trung ương,{\i0}\N{\i1}phòng hồi sức{\i0}
Dialogue: 0,0:10:18.75,0:10:20.59,TVevaTNR,,0000,0000,0000,,Ayanami...
Dialogue: 0,0:10:20.59,0:10:23.09,TVevaTNR,,0000,0000,0000,,Tôi đến thông báo cho cậu biết về\Nlịch trình chiến dịch Yashima.
Dialogue: 0,0:10:23.09,0:10:25.69,TVevaTNR,,0000,0000,0000,,Chiến dịch bắt đầu vào nửa đêm, lúc 0 giờ.
Dialogue: 0,0:10:27.36,0:10:33.30,TVevaTNR,,0000,0000,0000,,Phi công Ikari và Ayanami sẽ\Nvào khoang lúc 17:30.
Dialogue: 0,0:10:33.30,0:10:37.57,TVevaTNR,,0000,0000,0000,,18:00, kích hoạt Unit 01 và Unit 00.
Dialogue: 0,0:10:37.57,0:10:39.91,TVevaTNR,,0000,0000,0000,,18:05, xuất kích.
Dialogue: 0,0:10:39.91,0:10:43.18,TVevaTNR,,0000,0000,0000,,18:30, đến căn cứ tạm thời tại núi Futago.
Dialogue: 0,0:10:43.18,0:10:45.88,TVevaTNR,,0000,0000,0000,,Sau đó chờ chỉ thị.
Dialogue: 0,0:10:45.88,0:10:49.54,TVevaTNR,,0000,0000,0000,,Chiến dịch sẽ tiến hành ngay nửa đêm.
Dialogue: 0,0:10:51.62,0:10:52.81,TVevaTNR,,0000,0000,0000,,Đây là đồ mới.
Dialogue: 0,0:10:59.43,0:11:01.83,TVevaTNR,,0000,0000,0000,,Đừng xuất hiện ăn bận như thế.
Dialogue: 0,0:11:08.47,0:11:09.96,TVevaTNR,,0000,0000,0000,,Xin lỗi.
Dialogue: 0,0:11:14.21,0:11:16.84,TVevaTNR,,0000,0000,0000,,Đáng lẽ tớ phải xin lỗi từ hôm qua.
Dialogue: 0,0:11:18.61,0:11:20.10,TVevaTNR,,0000,0000,0000,,Bữa ăn của cậu.
Dialogue: 0,0:11:23.65,0:11:26.49,TVevaTNR,,0000,0000,0000,,Mình không muốn ăn.
Dialogue: 0,0:11:26.49,0:11:29.12,TVevaTNR,,0000,0000,0000,,Chúng ta sẽ xuất phát trong 60 phút.
Dialogue: 0,0:11:29.12,0:11:32.69,TVevaTNR,,0000,0000,0000,,Mình phải lái Eva nữa sao?
Dialogue: 0,0:11:32.69,0:11:34.09,TVevaTNR,,0000,0000,0000,,Đúng thế.
Dialogue: 0,0:11:35.10,0:11:37.70,TVevaTNR,,0000,0000,0000,,Mình không muốn.
Dialogue: 0,0:11:37.70,0:11:39.23,TVevaTNR,,0000,0000,0000,,Có lẽ cậu chỉ bình tĩnh được...
Dialogue: 0,0:11:39.23,0:11:42.03,TVevaTNR,,0000,0000,0000,,vì cậu không biết\N mình đã phải trải qua những gì.
Dialogue: 0,0:11:43.11,0:11:46.01,TVevaTNR,,0000,0000,0000,,Mình không muốn chịu đựng thêm nữa.
Dialogue: 0,0:11:46.01,0:11:47.10,TVevaTNR,,0000,0000,0000,,Vậy cậu cứ nằm đây.
Dialogue: 0,0:11:48.44,0:11:49.64,TVevaTNR,,0000,0000,0000,,Nằm ở đây?
Dialogue: 0,0:11:50.81,0:11:52.75,TVevaTNR,,0000,0000,0000,,Tôi sẽ lái Unit 01.
Dialogue: 0,0:11:54.02,0:11:59.25,TVevaTNR,,0000,0000,0000,,Tiến sĩ Akagi đã chuẩn bị\N ghi lại dữ liệu cá nhân rồi.
Dialogue: 0,0:11:59.25,0:12:01.16,TVevaTNR,,0000,0000,0000,,Ritsuko-san...
Dialogue: 0,0:12:01.16,0:12:05.25,TVevaTNR,,0000,0000,0000,,Tôi đi đây. Đại úy Katsuragi\N vàTiến sĩ Akagi đang đợi.
Dialogue: 0,0:12:09.77,0:12:11.26,TVevaTNR,,0000,0000,0000,,Tạm biệt.
Dialogue: 0,0:12:22.30,0:12:23.30,TVevaTNR,,0000,0000,0000,,
Dialogue: 0,0:12:28.45,0:12:33.15,TVevaTNR,,0000,0000,0000,,Họ muộn quá.\N Chúng ta lố giờ vào hầm trú rồi.
Dialogue: 0,0:12:33.15,0:12:35.79,TVevaTNR,,0000,0000,0000,,Tao đã lén xem dữ liệu của bố tao.
Dialogue: 0,0:12:35.79,0:12:37.93,TVevaTNR,,0000,0000,0000,,Chắc chắn sắp đến giờ rồi.
Dialogue: 0,0:12:37.93,0:12:40.05,TVevaTNR,,0000,0000,0000,,Chả thấy ai đến cả.
Dialogue: 0,0:12:45.70,0:12:47.54,TVevaTNR,,0000,0000,0000,,Ngọn núi đang chuyển động.
Dialogue: 0,0:12:47.54,0:12:49.03,TVevaTNR,,0000,0000,0000,,Evangelion!
Dialogue: 0,0:12:59.38,0:13:00.58,TVevaTNR,,0000,0000,0000,,Tuyệt cú mèo!
Dialogue: 0,0:13:00.58,0:13:08.15,TVevaTNR,,0000,0000,0000,,Cố lên, Evangelion! Chúng tôi tin \Nmấy cậu! Đánh bại lũ Angel đi!
Dialogue: 0,0:13:13.70,0:13:16.60,TVevaTNR,,0000,0000,0000,,{\i1}Mũi khoan đã xuyên qua{\i0}\N{\i1}lớp bảo vệ thứ 17.{\i0}
Dialogue: 0,0:13:16.60,0:13:21.77,TVevaTNR,,0000,0000,0000,,{\i1}Nó sẽ tới tổng bộ{\i0}\N{\i1}trong 3 giờ 55 phút nữa.{\i0}
Dialogue: 0,0:13:21.77,0:13:24.71,TVevaTNR,,0000,0000,0000,,{\i1}Tiếp nhận điện từ{\i0}\N{\i1}Shikoku và Kyushu hoàn tất.{\i0}
Dialogue: 0,0:13:24.71,0:13:27.57,TVevaTNR,,0000,0000,0000,,{\i1}Bắt đầu kiểm tra hệ thống tản nhiệt{\i0}
Dialogue: 0,0:13:28.54,0:13:31.10,TVevaTNR,,0000,0000,0000,,Hàng dễ vỡ đấy! Nhẹ nhàng thôi.
Dialogue: 0,0:13:32.88,0:13:37.25,TVevaTNR,,0000,0000,0000,,Thứ này không phải thiết kế \Ndành để đánh trận. Liệu nó có tác dụng không?
Dialogue: 0,0:13:37.25,0:13:40.46,TVevaTNR,,0000,0000,0000,,Chịu thôi em.\N Đây là cách duy nhất.
Dialogue: 0,0:13:40.46,0:13:41.96,TVevaTNR,,0000,0000,0000,,Cố ổn không ạ?
Dialogue: 0,0:13:41.96,0:13:43.49,TVevaTNR,,0000,0000,0000,,Theo lý thuyết là có.
Dialogue: 0,0:13:43.49,0:13:46.03,TVevaTNR,,0000,0000,0000,,Nhưng cô không rõ nòng\N súng với máy gia tốc...
Dialogue: 0,0:13:46.03,0:13:48.30,TVevaTNR,,0000,0000,0000,,có chịu được sức ép không.
Dialogue: 0,0:13:48.30,0:13:51.36,TVevaTNR,,0000,0000,0000,,Đây là lần đầu nó được \Ndùng với năng lượng lớn.
Dialogue: 0,0:13:52.80,0:13:56.97,TVevaTNR,,0000,0000,0000,,Đây là vị trí chiến đấu của em.
Dialogue: 0,0:13:56.97,0:13:57.61,TVevaTNR,,0000,0000,0000,,Shinji-kun...
Dialogue: 0,0:13:57.61,0:13:57.87,TVevaTNR,,0000,0000,0000,,Vâng.
Dialogue: 0,0:13:57.87,0:13:58.17,TVevaTNR,,0000,0000,0000,,Unit 01 sẽ là người bắn.
Dialogue: 0,0:13:58.17,0:14:00.34,TVevaTNR,,0000,0000,0000,,Unit 01 sẽ là người bắn.
Dialogue: 0,0:14:00.34,0:14:01.41,TVevaTNR,,0000,0000,0000,,Vâng.
Dialogue: 0,0:14:01.41,0:14:03.95,TVevaTNR,,0000,0000,0000,,Rei, em sẽ che chắn cậu ấy bằng Unit 00.
Dialogue: 0,0:14:03.95,0:14:04.95,TVevaTNR,,0000,0000,0000,,Vâng.
Dialogue: 0,0:14:04.95,0:14:09.22,TVevaTNR,,0000,0000,0000,,Vì mức đồng bộ\N của Shinji-kun cao hơn,
Dialogue: 0,0:14:09.22,0:14:12.89,TVevaTNR,,0000,0000,0000,,chiến dịch này cần độ chính xác.
Dialogue: 0,0:14:12.89,0:14:14.72,TVevaTNR,,0000,0000,0000,,Vì tia positron sẽ chịu\Nlực hút của Trái Đất,
Dialogue: 0,0:14:14.72,0:14:18.43,TVevaTNR,,0000,0000,0000,,từ trường và độ xoay,\Nnó sẽ không bắn theo đường thẳng.
Dialogue: 0,0:14:18.43,0:14:21.66,TVevaTNR,,0000,0000,0000,,Phải nhớ chỉnh lại mức sai số nhé.
Dialogue: 0,0:14:21.66,0:14:24.73,TVevaTNR,,0000,0000,0000,,Ngắm chính xác vào hạt nhân của nó.
Dialogue: 0,0:14:24.73,0:14:28.74,TVevaTNR,,0000,0000,0000,,Nhưng em chưa tập cái này bao giờ!
Dialogue: 0,0:14:28.74,0:14:30.14,TVevaTNR,,0000,0000,0000,,Đừng lo.
Dialogue: 0,0:14:30.14,0:14:32.17,TVevaTNR,,0000,0000,0000,,Cứ làm theo hướng dẫn.
Dialogue: 0,0:14:32.17,0:14:36.21,TVevaTNR,,0000,0000,0000,,Khi vòng nhắm vào giữa thì kéo cò.
Dialogue: 0,0:14:36.21,0:14:38.71,TVevaTNR,,0000,0000,0000,,Máy tính sẽ lo phần còn lại.
Dialogue: 0,0:14:38.71,0:14:42.08,TVevaTNR,,0000,0000,0000,,Và sẽ tốn một khoảng\N thời gian cho lượt bắn tiếp theo
Dialogue: 0,0:14:42.08,0:14:45.92,TVevaTNR,,0000,0000,0000,,để tản nhiệt, thay cầu chì và nạp lại.
Dialogue: 0,0:14:45.92,0:14:49.09,TVevaTNR,,0000,0000,0000,,Vậy nếu em bắn hụt, \Nkẻ thù bắn trả thì sao?
Dialogue: 0,0:14:49.09,0:14:51.33,TVevaTNR,,0000,0000,0000,,Giờ ta đừng lo chuyện ấy.
Dialogue: 0,0:14:51.33,0:14:53.95,TVevaTNR,,0000,0000,0000,,Cố gắng tiêu diệt nó chỉ bằng một phát.
Dialogue: 0,0:14:55.86,0:14:58.67,TVevaTNR,,0000,0000,0000,,{\i1}Vậy nên mình không có lựa chọn.{\i0}
Dialogue: 0,0:14:58.67,0:15:00.90,TVevaTNR,,0000,0000,0000,,Em...
Dialogue: 0,0:15:00.90,0:15:03.27,TVevaTNR,,0000,0000,0000,,Em sẽ phải bảo vệ Unit 01 đúng không?
Dialogue: 0,0:15:03.27,0:15:04.84,TVevaTNR,,0000,0000,0000,,Đúng.
Dialogue: 0,0:15:04.84,0:15:06.61,TVevaTNR,,0000,0000,0000,,Em hiểu rồi.
Dialogue: 0,0:15:06.61,0:15:09.71,TVevaTNR,,0000,0000,0000,,Đến giờ rồi. Thay đồ đi.
Dialogue: 0,0:15:09.71,0:15:11.20,TVevaTNR,,0000,0000,0000,,Vâng!
Dialogue: 0,0:15:21.16,0:15:22.79,TVevaTNR,,0000,0000,0000,,Có thể...
Dialogue: 0,0:15:22.79,0:15:24.28,TVevaTNR,,0000,0000,0000,,...chúng ta sẽ phải chết đấy.
Dialogue: 0,0:15:25.89,0:15:27.38,TVevaTNR,,0000,0000,0000,,Sao cậu lại nói thế?
Dialogue: 0,0:15:31.83,0:15:33.23,TVevaTNR,,0000,0000,0000,,Cậu sẽ không chết đâu.
Dialogue: 0,0:15:35.14,0:15:36.63,TVevaTNR,,0000,0000,0000,,Tôi sẽ bảo vệ cậu.
Dialogue: 0,0:16:18.05,0:16:20.98,TVevaTNR,,0000,0000,0000,,Tại sao cậu lại lái nó?
Dialogue: 0,0:16:24.75,0:16:26.45,TVevaTNR,,0000,0000,0000,,Bởi vì tôi liên kết với nó.
Dialogue: 0,0:16:26.45,0:16:27.28,TVevaTNR,,0000,0000,0000,,Liên kết?
Dialogue: 0,0:16:28.72,0:16:30.78,TVevaTNR,,0000,0000,0000,,Đúng, mối liên kết.
Dialogue: 0,0:16:32.39,0:16:34.36,TVevaTNR,,0000,0000,0000,,Với cả bố mình sao?
