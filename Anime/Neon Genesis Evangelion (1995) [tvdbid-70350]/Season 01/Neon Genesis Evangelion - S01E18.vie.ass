Dialogue: 0,0:00:37.70,0:00:40.90,INS-song-Rom,,0000,0000,0000,,{\i1\pos(320,30)}Sotto fureru mono{\i0}
Dialogue: 0,0:00:40.90,0:00:44.70,KaraEv,,0000,0000,0000,,một khoảng khắc dịu dàng như trong mơ
Dialogue: 0,0:00:44.70,0:00:48.10,KaraEv,,0000,0000,0000,,Đôi mắt ngây thơ\N như chưa biết điều gì
Dialogue: 0,0:00:48.10,0:00:51.30,KaraEv,,0000,0000,0000,,về con đường định mệnh\N mà bạn đang theo đuổi
Dialogue: 0,0:00:52.30,0:00:55.80,KaraEv,,0000,0000,0000,,Nhưng ngày kia bạn sẽ nhận ra được
Dialogue: 0,0:00:55.80,0:00:58.60,KaraEv,,0000,0000,0000,,mọi thứ bạn đang có phía sau lưng
Dialogue: 0,0:00:59.60,0:01:03.50,KaraEv,,0000,0000,0000,,Đôi cánh bạn vút bay theo đuổi
Dialogue: 0,0:01:03.50,0:01:06.80,KaraEv,,0000,0000,0000,,một tương lai mới chỉ \Nbạn mới có thể kiếm tìm
Dialogue: 0,0:01:07.10,0:01:10.80,KaraEv,,0000,0000,0000,,Luận điểm thiên thần tàn khốc
Dialogue: 0,0:01:10.80,0:01:14.60,KaraEv,,0000,0000,0000,,vút bay ra khỏi khung trời cửa sổ
Dialogue: 0,0:01:14.60,0:01:18.30,KaraEv,,0000,0000,0000,,Nếu bạn chối bỏ quá khứ đã qua
Dialogue: 0,0:01:18.30,0:01:22.10,KaraEv,,0000,0000,0000,,thì những xúc cảm sẽ dâng trào không dứt
Dialogue: 0,0:01:22.10,0:01:25.80,KaraEv,,0000,0000,0000,,Nắm lấy vũ trụ và hãy tỏa sáng đi
Dialogue: 0,0:01:25.80,0:01:30.20,KaraEv,,0000,0000,0000,,Chàng trai hãy vững tin \Nvà trở thành một huyền thoại
