Dialogue: 0,0:13:25.53,0:13:28.40,TVevaTNR,,0000,0000,0000,,{\i1}Bơm LCL. Tháo ống dẫn khí.{\i0}
Dialogue: 0,0:13:29.94,0:13:33.13,TVevaTNR,,0000,0000,0000,,{\i1}Tại sao mình lại lái khi mà{\i0}\N{\i1}bố còn không ở đây?{\i0}
Dialogue: 0,0:13:35.61,0:13:37.37,TVevaTNR,,0000,0000,0000,,{\i1}Còn bị đánh nữa chứ?{\i0}
Dialogue: 0,0:13:41.31,0:13:44.72,TVevaTNR,,0000,0000,0000,,Này, tao có chuyện muốn nói với mày?
Dialogue: 0,0:13:44.72,0:13:45.59,TVevaTNR,,0000,0000,0000,,Gì thế?
Dialogue: 0,0:13:45.59,0:13:46.22,TVevaTNR,,0000,0000,0000,,Đi cùng tao tí?\NGì thế?
Dialogue: 0,0:13:46.22,0:13:47.55,TVevaTNR,,0000,0000,0000,,Đi cùng tao tí?\N{\i1} {\i0}
Dialogue: 0,0:13:47.55,0:13:49.02,TVevaTNR,,0000,0000,0000,,Được rồi.
Dialogue: 0,0:13:49.89,0:13:51.49,TVevaTNR,,0000,0000,0000,,Lớp trưởng!
Dialogue: 0,0:13:51.49,0:13:52.29,TVevaTNR,,0000,0000,0000,,Gì thế?
Dialogue: 0,0:13:52.29,0:13:52.99,TVevaTNR,,0000,0000,0000,,Bọn này đi vệ sinh nhé!\NGì thế?
Dialogue: 0,0:13:52.99,0:13:54.66,TVevaTNR,,0000,0000,0000,,Bọn này đi vệ sinh nhé!\N{\i1} {\i0}
Dialogue: 0,0:13:54.66,0:13:57.46,TVevaTNR,,0000,0000,0000,,Phải đi vệ sinh trước khi vào đây chứ.
Dialogue: 0,0:13:58.03,0:13:59.63,TVevaTNR,,0000,0000,0000,,Rồi, cái gì nào?
Dialogue: 0,0:13:59.63,0:14:02.44,TVevaTNR,,0000,0000,0000,,Tao muốn thấy nó \Nít nhất một lần trong đời.
Dialogue: 0,0:14:02.44,0:14:03.80,TVevaTNR,,0000,0000,0000,,Ý mày là trận chiến trên kia?
Dialogue: 0,0:14:03.80,0:14:03.94,TVevaTNR,,0000,0000,0000,,Chẳng ai biết lần sau kẻ thù sẽ đến khi nào.\NÝ mày là trận chiến trên kia?
Dialogue: 0,0:14:03.94,0:14:07.31,TVevaTNR,,0000,0000,0000,,Chẳng ai biết lần sau kẻ thù sẽ đến khi nào.\N{\i1} {\i0}
Dialogue: 0,0:14:07.31,0:14:09.68,TVevaTNR,,0000,0000,0000,,Kensuke, mày có điên không thế?
Dialogue: 0,0:14:09.68,0:14:12.35,TVevaTNR,,0000,0000,0000,,Ta mà bỏ lỡ cơ hội\N này thì sẽ không có lần hai!
Dialogue: 0,0:14:12.35,0:14:15.28,TVevaTNR,,0000,0000,0000,,Giúp tao mở cổng đi mà.
Dialogue: 0,0:14:15.28,0:14:16.95,TVevaTNR,,0000,0000,0000,,Nhưng ra ngoài đó chết như chơi đấy.
Dialogue: 0,0:14:16.95,0:14:18.88,TVevaTNR,,0000,0000,0000,,Nếu ở lại cũng chắc gì đã an toàn?
Dialogue: 0,0:14:18.88,0:14:21.09,TVevaTNR,,0000,0000,0000,,Kiểu gì cũng chết thì nhìn nó phát cho sướng.
Dialogue: 0,0:14:21.09,0:14:24.39,TVevaTNR,,0000,0000,0000,,Thằng ngốc. Mày nghĩ NERV lập ra làm gì?
Dialogue: 0,0:14:24.39,0:14:27.19,TVevaTNR,,0000,0000,0000,,Mày nghĩ vũ khí tối thượng của NERV là gì?
Dialogue: 0,0:14:27.19,0:14:29.60,TVevaTNR,,0000,0000,0000,,Là con robot mà thằng ma mới lái.
Dialogue: 0,0:14:29.60,0:14:31.93,TVevaTNR,,0000,0000,0000,,Lần trước nó bảo vệ chúng ta,
Dialogue: 0,0:14:31.93,0:14:35.13,TVevaTNR,,0000,0000,0000,,nhưng mày lại đấm nó tới hai cú!
Dialogue: 0,0:14:36.07,0:14:39.83,TVevaTNR,,0000,0000,0000,,Nếu nó mà không chiến đấu thì chết cả lũ.
Dialogue: 0,0:14:40.37,0:14:44.47,TVevaTNR,,0000,0000,0000,,Mày có nghĩa vụ phải xem nó chiến đấu chứ?
Dialogue: 0,0:14:44.91,0:14:46.61,TVevaTNR,,0000,0000,0000,,Bó tay rồi!
Dialogue: 0,0:14:47.85,0:14:51.49,TVevaTNR,,0000,0000,0000,,Mày muốn gì là phải làm bằng được hả?
