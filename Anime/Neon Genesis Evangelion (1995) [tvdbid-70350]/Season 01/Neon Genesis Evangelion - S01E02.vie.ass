Dialogue: 0,0:01:33.75,0:01:35.55,TVevaTNR,,0000,0000,0000,,Sẵn sàng chưa, Shinji-kun?
Dialogue: 0,0:01:35.96,0:01:36.99,TVevaTNR,,0000,0000,0000,,Vâng.
Dialogue: 0,0:01:36.99,0:01:37.46,TVevaTNR,,0000,0000,0000,,Tháo khóa an toàn cuối cùng!
Dialogue: 0,0:01:37.46,0:01:39.43,TVevaTNR,,0000,0000,0000,,Tháo khóa an toàn cuối cùng!
Dialogue: 0,0:01:40.13,0:01:42.89,TVevaTNR,,0000,0000,0000,,Evangelion Unit 01, xuất kích!
Dialogue: 0,0:01:45.83,0:01:49.39,TVevaTNR,,0000,0000,0000,,Shinji-kun, giờ em cứ nghĩ tới việc bước đi thôi.
Dialogue: 0,0:01:50.00,0:01:51.47,TVevaTNR,,0000,0000,0000,,Bước đi...
Dialogue: 0,0:02:00.48,0:02:01.95,TVevaTNR,,0000,0000,0000,,Nó di chuyển rồi!
Dialogue: 0,0:02:04.39,0:02:05.85,TVevaTNR,,0000,0000,0000,,Bước đi...
Dialogue: 0,0:02:14.43,0:02:16.59,TVevaTNR,,0000,0000,0000,,Shinji-kun, em có sao không?
Dialogue: 0,0:02:17.10,0:02:19.23,TVevaTNR,,0000,0000,0000,,Nhanh lên! Đứng dậy ngay đi!
Dialogue: 0,0:02:30.21,0:02:33.15,TVevaTNR,,0000,0000,0000,,Shinji-kun, bình tĩnh! Đó không phải tay em đâu!
Dialogue: 0,0:02:37.15,0:02:38.69,TVevaTNR,,0000,0000,0000,,Hệ thống phòng thủ của Eva thế nào?
Dialogue: 0,0:02:38.69,0:02:40.32,TVevaTNR,,0000,0000,0000,,Tín hiệu không hoạt động!
Dialogue: 0,0:02:40.32,0:02:41.79,TVevaTNR,,0000,0000,0000,,Màn bảo vệ không thể triển khai!
Dialogue: 0,0:02:42.19,0:02:43.66,TVevaTNR,,0000,0000,0000,,Thất bại sao?
Dialogue: 0,0:02:48.30,0:02:49.26,TVevaTNR,,0000,0000,0000,,Tay trái đã bị tổn thương!
Dialogue: 0,0:02:49.26,0:02:49.80,TVevaTNR,,0000,0000,0000,,Mạch đã bị ngắt!
Dialogue: 0,0:02:49.80,0:02:50.73,TVevaTNR,,0000,0000,0000,,Mạch đã bị ngắt!
Dialogue: 0,0:02:53.20,0:02:54.67,TVevaTNR,,0000,0000,0000,,Shinji-kun, mau tránh đi!
Dialogue: 0,0:03:00.54,0:03:02.28,TVevaTNR,,0000,0000,0000,,Có rạn nứt ở vùng đầu!
Dialogue: 0,0:03:02.28,0:03:04.34,TVevaTNR,,0000,0000,0000,,Lớp giáp không thể trụ lâu hơn được!
Dialogue: 0,0:03:13.19,0:03:15.12,TVevaTNR,,0000,0000,0000,,Phần đầu bị tổn thương!\NThiệt hại: không rõ!
Dialogue: 0,0:03:15.12,0:03:17.59,TVevaTNR,,0000,0000,0000,,Hệ thần kinh kiểm soát đang bị ngắt!
Dialogue: 0,0:03:17.59,0:03:19.72,TVevaTNR,,0000,0000,0000,,Không có tín hiệu từ phi công!
Dialogue: 0,0:03:20.43,0:03:21.90,TVevaTNR,,0000,0000,0000,,Shinji-kun!
Dialogue: 0,0:03:53.23,0:03:54.69,TVevaTNR,,0000,0000,0000,,Trần nhà xa lạ quá.
Dialogue: 0,0:03:54.70,0:03:58.00,TVevaTNR,,0000,0000,0000,,Tập 2:\NTrần Nhà Xa Lạ.
Dialogue: 0,0:04:10.28,0:04:12.05,TVevaTNR,,0000,0000,0000,,Bọn Angel đã trở lại rồi à?
Dialogue: 0,0:04:12.05,0:04:13.78,TVevaTNR,,0000,0000,0000,,Đường đột thật đấy.
Dialogue: 0,0:04:13.78,0:04:15.85,TVevaTNR,,0000,0000,0000,,Cũng tương tự như 15 năm trước.
Dialogue: 0,0:04:15.85,0:04:19.65,TVevaTNR,,0000,0000,0000,,Tai họa cứ ập đến \Nmà không hề báo trước.
Dialogue: 0,0:04:20.05,0:04:25.99,TVevaTNR,,0000,0000,0000,,Ít ra thì sự đầu tư của ta \Ncũng không bị lãng phí
Dialogue: 0,0:04:26.36,0:04:28.66,TVevaTNR,,0000,0000,0000,,Cái đó thì chưa chắc.
Dialogue: 0,0:04:28.66,0:04:31.13,TVevaTNR,,0000,0000,0000,,Nếu không có lãi thì cũng chỉ vậy thôi.
Dialogue: 0,0:04:31.13,0:04:34.10,TVevaTNR,,0000,0000,0000,,Đúng thế. Hiện giờ chúng ta cần \Nkiểm soát thông tin về bọn Angel,
Dialogue: 0,0:04:34.10,0:04:37.70,TVevaTNR,,0000,0000,0000,,tránh rắc rối không cần thiết
Dialogue: 0,0:04:38.11,0:04:44.10,TVevaTNR,,0000,0000,0000,,NERV phải xử lý những vấn đề này thật nhanh chóng.
Dialogue: 0,0:04:44.48,0:04:48.68,TVevaTNR,,0000,0000,0000,,Chuyện đó đã ổn thỏa.\NÔng có thể yên tâm.
Dialogue: 0,0:04:48.68,0:04:52.82,TVevaTNR,,0000,0000,0000,,{\i1}Liên quan đến trình trạng{\i0}\N{\i1}khẩn cấp ngày hôm qua,{\i0}
Dialogue: 0,0:04:52.82,0:04:52.82,TVevaTNR,,0000,0000,0000,,
Dialogue: 0,0:04:52.82,0:04:54.22,TVevaTNR,,0000,0000,0000,,chính phủ đã chính thức xác nhận
Dialogue: 0,0:04:54.22,0:04:55.56,TVevaTNR,,0000,0000,0000,,{\i1} {\i0}\N{\i1}Tai nạn hôm qua là...{\i0}
Dialogue: 0,0:04:55.56,0:04:56.79,TVevaTNR,,0000,0000,0000,,{\i1} {\i0}\N{\i1}Quân đội Liên Hiệp Quốc tại Nhật Bản...{\i0}
Dialogue: 0,0:04:56.79,0:05:00.00,TVevaTNR,,0000,0000,0000,,Lại màn kịch B-22 à.\N{\i1}Quân đội Liên Hiệp Quốc tại Nhật Bản...{\i0}
Dialogue: 0,0:05:00.00,0:05:02.53,TVevaTNR,,0000,0000,0000,,Ta lại giấu công chúng nữa nhỉ.
Dialogue: 0,0:05:02.53,0:05:03.36,TVevaTNR,,0000,0000,0000,,Mấy người bên ngoại giao có vẻ vui lắm.
Dialogue: 0,0:05:03.36,0:05:04.50,TVevaTNR,,0000,0000,0000,,Mấy người bên ngoại giao có vẻ vui lắm.
Dialogue: 0,0:05:04.50,0:05:06.50,TVevaTNR,,0000,0000,0000,,Cuối cùng họ cũng có việc để làm.
Dialogue: 0,0:05:06.50,0:05:07.00,TVevaTNR,,0000,0000,0000,,Bọn họ lạc quan quá nhỉ.
Dialogue: 0,0:05:07.00,0:05:08.90,TVevaTNR,,0000,0000,0000,,Bọn họ lạc quan quá nhỉ.
Dialogue: 0,0:05:08.90,0:05:12.07,TVevaTNR,,0000,0000,0000,,Cũng chưa chắc. Ai cũng sợ chết cả thôi.
Dialogue: 0,0:05:12.07,0:05:13.14,TVevaTNR,,0000,0000,0000,,
Dialogue: 0,0:05:13.14,0:05:14.54,TVevaTNR,,0000,0000,0000,,Sợ là bình thường mà.
Dialogue: 0,0:05:15.18,0:05:17.51,TVevaTNR,,0000,0000,0000,,Cuộc họp kết thúc tại đây.
Dialogue: 0,0:05:17.51,0:05:19.55,TVevaTNR,,0000,0000,0000,,Mà này, Ikari-kun,
Dialogue: 0,0:05:19.55,0:05:23.12,TVevaTNR,,0000,0000,0000,,cậu không có cách gì để \Nsử dụng NERV và EVA tốt hơn sao?
Dialogue: 0,0:05:23.12,0:05:24.92,TVevaTNR,,0000,0000,0000,,Trước đây là chi phí sửa chữa cho Unit 00,
Dialogue: 0,0:05:24.92,0:05:28.49,TVevaTNR,,0000,0000,0000,,giờ lại thêm Unit 01 nữa,
Dialogue: 0,0:05:28.49,0:05:30.52,TVevaTNR,,0000,0000,0000,,đủ để làm phá sản một quốc gia đấy.
Dialogue: 0,0:05:30.52,0:05:35.10,TVevaTNR,,0000,0000,0000,,Nghe nói ông đưa món đồ chơi đó \Ncho con trai mình đúng không?
Dialogue: 0,0:05:35.10,0:05:38.26,TVevaTNR,,0000,0000,0000,,Nhân lực, thời gian và tiền bạc.
Dialogue: 0,0:05:38.70,0:05:41.77,TVevaTNR,,0000,0000,0000,,Gia đình ông định tiêu xài bao nhiêu cho đủ?
Dialogue: 0,0:05:41.77,0:05:45.04,TVevaTNR,,0000,0000,0000,,Hơn nữa ông còn có nhiệm vụ khác.
Dialogue: 0,0:05:45.04,0:05:46.64,TVevaTNR,,0000,0000,0000,,Dự án Hoàn Thiện Con Người,
Dialogue: 0,0:05:46.64,0:05:49.11,TVevaTNR,,0000,0000,0000,,đó là việc phải ưu tiên hàng đầu.
Dialogue: 0,0:05:49.11,0:05:55.82,TVevaTNR,,0000,0000,0000,,Trong hoàn cảnh tuyệt vọng hiện nay, \Nđó là niềm hy vọng cuối cùng của chúng ta
Dialogue: 0,0:05:55.82,0:05:57.38,TVevaTNR,,0000,0000,0000,,Ông có hiểu không?
Dialogue: 0,0:05:57.38,0:06:02.72,TVevaTNR,,0000,0000,0000,,Dù là bọn Angel cũng không phải lý do \Ncho việc trì hoãn tiến độ dự án.
Dialogue: 0,0:06:03.32,0:06:06.19,TVevaTNR,,0000,0000,0000,,Chúng tôi sẽ cân nhắc vấn đề ngân sách.
Dialogue: 0,0:06:06.19,0:06:09.06,TVevaTNR,,0000,0000,0000,,Cuộc họp kết thục tại đây.
Dialogue: 0,0:06:09.06,0:06:11.43,TVevaTNR,,0000,0000,0000,,Cậu vất vả rồi, Ikari-kun.
Dialogue: 0,0:06:13.83,0:06:17.36,TVevaTNR,,0000,0000,0000,,Ikari, không còn đường lui nữa đâu.
Dialogue: 0,0:06:19.91,0:06:21.53,TVevaTNR,,0000,0000,0000,,Tôi hiểu.
Dialogue: 0,0:06:22.38,0:06:24.44,TVevaTNR,,0000,0000,0000,,Loài người không còn thời gian nữa.
Dialogue: 0,0:06:51.77,0:06:54.34,TVevaTNR,,0000,0000,0000,,Điều hòa nhiệt độ đúng là phát minh \Nvĩ đại nhất của loài người.
Dialogue: 0,0:06:54.34,0:06:56.84,TVevaTNR,,0000,0000,0000,,Chiến thắng của khoa học trước tự nhiên.
Dialogue: 0,0:06:56.84,0:06:59.18,TVevaTNR,,0000,0000,0000,,Shinji-kun tỉnh dậy rồi.
Dialogue: 0,0:06:59.18,0:07:01.22,TVevaTNR,,0000,0000,0000,,Thế em ấy thế nào?
Dialogue: 0,0:07:01.22,0:07:04.71,TVevaTNR,,0000,0000,0000,,Không có vết thương nghiêm trọng. \NMặc dù trí nhớ có hơi lộn xộn chút.
Dialogue: 0,0:07:05.29,0:07:07.59,TVevaTNR,,0000,0000,0000,,Không bị tổn thương não đấy chứ?
Dialogue: 0,0:07:07.59,0:07:09.86,TVevaTNR,,0000,0000,0000,,Bác sĩ bảo không có gì đáng lo hết.
Dialogue: 0,0:07:09.86,0:07:11.32,TVevaTNR,,0000,0000,0000,,Thật chứ?
Dialogue: 0,0:07:12.26,0:07:15.56,TVevaTNR,,0000,0000,0000,,Em ý đã có một ngày khá bận rộn nhỉ.
Dialogue: 0,0:07:15.56,0:07:19.29,TVevaTNR,,0000,0000,0000,,Hộp sọ thần kinh chịu quá nhiều sức ép mà.
Dialogue: 0,0:07:19.70,0:07:22.40,TVevaTNR,,0000,0000,0000,,Ý cậu là tinh thần sao?
Dialogue: 0,0:07:42.86,0:07:45.09,TVevaTNR,,0000,0000,0000,,Rồi, tiếp tục đi.
Dialogue: 0,0:07:45.09,0:07:46.72,TVevaTNR,,0000,0000,0000,,Phải, đúng rồi. Dừng.
Dialogue: 0,0:07:50.10,0:07:52.93,TVevaTNR,,0000,0000,0000,,Nếu Eva và thành phố này phát huy hết tiềm lực,
Dialogue: 0,0:07:52.93,0:07:54.50,TVevaTNR,,0000,0000,0000,,chúng ta có thể thắng.
Dialogue: 0,0:07:54.50,0:07:58.14,TVevaTNR,,0000,0000,0000,,Cậu tính đánh bại lũ Angel sao?\NĐúng là một người lạc quan đấy.
Dialogue: 0,0:07:58.14,0:08:02.37,TVevaTNR,,0000,0000,0000,,Đôi khi cuộc sống cũng cần một chút mơ mộng mà.
Dialogue: 0,0:08:04.38,0:08:07.58,TVevaTNR,,0000,0000,0000,,Cũng phải. Nghe cậu nói thế cũng thấy lạc quan hơn chút.
Dialogue: 0,0:08:08.65,0:08:09.48,TVevaTNR,,0000,0000,0000,,Đi nhé!
Dialogue: 0,0:08:09.48,0:08:10.15,TVevaTNR,,0000,0000,0000,,
Dialogue: 0,0:08:10.15,0:08:13.02,TVevaTNR,,0000,0000,0000,,
Dialogue: 0,0:08:13.02,0:08:16.82,TVevaTNR,,0000,0000,0000,,
Dialogue: 0,0:08:18.99,0:08:22.55,TVevaTNR,,0000,0000,0000,,
Dialogue: 0,0:08:22.96,0:08:26.13,TVevaTNR,,0000,0000,0000,,
Dialogue: 0,0:08:48.36,0:08:50.06,TVevaTNR,,0000,0000,0000,,Có chắc không?
Dialogue: 0,0:08:50.06,0:08:51.76,TVevaTNR,,0000,0000,0000,,Họ không muốn sống chung sao?
Dialogue: 0,0:08:51.76,0:08:56.63,TVevaTNR,,0000,0000,0000,,Ikari và con trai ông ấy không \Nsống chung là chuyện bình thường.
Dialogue: 0,0:08:57.10,0:09:00.59,TVevaTNR,,0000,0000,0000,,Vậy sống chung mới là bất thường à?
Dialogue: 0,0:09:01.14,0:09:02.64,TVevaTNR,,0000,0000,0000,,Sống một mình sao?
Dialogue: 0,0:09:02.64,0:09:06.51,TVevaTNR,,0000,0000,0000,,Đúng thế. Phòng cậu ấy ở khu thứ 6, \Nngay cạnh nơi này
Dialogue: 0,0:09:06.51,0:09:07.91,TVevaTNR,,0000,0000,0000,,Có vấn đề gì không?
Dialogue: 0,0:09:07.91,0:09:08.01,TVevaTNR,,0000,0000,0000,,Có vấn đề gì không?
Dialogue: 0,0:09:08.01,0:09:09.37,TVevaTNR,,0000,0000,0000,,Không ạ.
Dialogue: 0,0:09:10.01,0:09:12.81,TVevaTNR,,0000,0000,0000,,Vậy có ổn không? Shinji-kun...
Dialogue: 0,0:09:12.81,0:09:14.94,TVevaTNR,,0000,0000,0000,,Không sao. Em thích sống một mình hơn.
Dialogue: 0,0:09:15.88,0:09:17.58,TVevaTNR,,0000,0000,0000,,Trước giờ vẫn vậy thôi.
Dialogue: 0,0:09:18.19,0:09:19.35,TVevaTNR,,0000,0000,0000,,Hả?!
Dialogue: 0,0:09:19.35,0:09:19.69,TVevaTNR,,0000,0000,0000,,Tớ nói là, tớ sẽ lo cho Shinji-kun.
Dialogue: 0,0:09:19.69,0:09:23.71,TVevaTNR,,0000,0000,0000,,Tớ nói là, tớ sẽ lo cho Shinji-kun.
Dialogue: 0,0:09:24.22,0:09:25.85,TVevaTNR,,0000,0000,0000,,Tớ đã hỏi qua cấp trên rồi.
Dialogue: 0,0:09:26.46,0:09:29.30,TVevaTNR,,0000,0000,0000,,Mà không có nghĩa \Ntớ định "làm gì" nó đâu.
Dialogue: 0,0:09:29.30,0:09:32.73,TVevaTNR,,0000,0000,0000,,{\i1}Tất nhiên rồi! Cậu nghĩ cái{\i0}\N{\i1}quái gì thế?{\i0}
Dialogue: 0,0:09:32.73,0:09:33.40,TVevaTNR,,0000,0000,0000,,{\i1} {\i0}\N{\i1}Cậu lúc nào cũng thế. Thật xấu hổ!{\i0}
Dialogue: 0,0:09:33.40,0:09:35.73,TVevaTNR,,0000,0000,0000,,Thật chẳng biết đùa gì cả.\N{\i1}Cậu lúc nào cũng thế. Thật xấu hổ!{\i0}
Dialogue: 0,0:09:38.91,0:09:42.81,TVevaTNR,,0000,0000,0000,,Vậy, tối nay ta mở tiệc nhé?
Dialogue: 0,0:09:43.94,0:09:45.08,TVevaTNR,,0000,0000,0000,,Để làm gì ạ?
Dialogue: 0,0:09:45.08,0:09:45.45,TVevaTNR,,0000,0000,0000,,Tất nhiên là để mừng thành viên mới rồi!
Dialogue: 0,0:09:45.45,0:09:48.54,TVevaTNR,,0000,0000,0000,,Tất nhiên là để mừng thành viên mới rồi!
Dialogue: 0,0:09:53.32,0:09:55.31,TVevaTNR,,0000,0000,0000,,Thế cô định chuyển đi sao?
Dialogue: 0,0:09:55.86,0:10:01.30,TVevaTNR,,0000,0000,0000,,Phải. Tôi không ngờ rằng chỗ này \Nsắp thành chiến trường.
Dialogue: 0,0:10:01.30,0:10:02.96,TVevaTNR,,0000,0000,0000,,Cũng đúng nhỉ.
Dialogue: 0,0:10:02.96,0:10:06.97,TVevaTNR,,0000,0000,0000,,Chồng tôi nói ít ra phải để các con tôi đi trú.
Dialogue: 0,0:10:06.97,0:10:08.74,TVevaTNR,,0000,0000,0000,,Di cư à.
Dialogue: 0,0:10:08.74,0:10:12.71,TVevaTNR,,0000,0000,0000,,Thành phố này có thể là một pháo đài nhưng \Nchẳng đảm bảo được gì hết.
Dialogue: 0,0:10:12.71,0:10:16.11,TVevaTNR,,0000,0000,0000,,Nhớ lại vụ hôm qua mà rợn hết cả người.
Dialogue: 0,0:10:17.28,0:10:18.74,TVevaTNR,,0000,0000,0000,,Đúng thế.
Dialogue: 0,0:10:21.72,0:10:25.45,TVevaTNR,,0000,0000,0000,,Chị dừng ở chỗ này chút nhé.
Dialogue: 0,0:10:25.45,0:10:26.92,TVevaTNR,,0000,0000,0000,,Ở đâu vậy ạ?
Dialogue: 0,0:10:27.29,0:10:28.75,TVevaTNR,,0000,0000,0000,,Một chỗ rất hay.
Dialogue: 0,0:10:34.83,0:10:38.42,TVevaTNR,,0000,0000,0000,,Thành phố này trông cô độc nhỉ?
Dialogue: 0,0:10:40.63,0:10:42.10,TVevaTNR,,0000,0000,0000,,Đến giờ rồi.
Dialogue: 0,0:11:07.23,0:11:10.25,TVevaTNR,,0000,0000,0000,,Tuyệt thật! Các tòa nhà đang mọc lên!
Dialogue: 0,0:11:25.58,0:11:29.04,TVevaTNR,,0000,0000,0000,,Thành phố này là một pháo đài \Nđược thiết kế để chống lại lũ Angel.
Dialogue: 0,0:11:29.58,0:11:31.41,TVevaTNR,,0000,0000,0000,,Tokyo 3.
Dialogue: 0,0:11:31.95,0:11:33.61,TVevaTNR,,0000,0000,0000,,Đây là thành phố của chúng ta.
Dialogue: 0,0:11:35.72,0:11:39.49,TVevaTNR,,0000,0000,0000,,Và là thành phố mà em đã bảo vệ.
Dialogue: 0,0:11:53.11,0:11:55.73,TVevaTNR,,0000,0000,0000,,Đồ của em chắc được chuyển đến rồi.
Dialogue: 0,0:11:56.44,0:12:00.57,TVevaTNR,,0000,0000,0000,,Chị cũng mới chuyển đến chỗ này thôi.
Dialogue: 0,0:12:01.21,0:12:02.92,TVevaTNR,,0000,0000,0000,,Vào thôi.
Dialogue: 0,0:12:02.92,0:12:06.51,TVevaTNR,,0000,0000,0000,,Ưm...Xin lỗi đã làm phiền.
Dialogue: 0,0:12:07.69,0:12:10.68,TVevaTNR,,0000,0000,0000,,Shinji, bây giờ nơi này là nhà em.
Dialogue: 0,0:12:17.53,0:12:19.52,TVevaTNR,,0000,0000,0000,,Em đã về.
Dialogue: 0,0:12:20.07,0:12:21.62,TVevaTNR,,0000,0000,0000,,Mừng em về nhà.
Dialogue: 0,0:12:23.27,0:12:26.61,TVevaTNR,,0000,0000,0000,,Nhà cửa có hơi lộn xộn tí.
Dialogue: 0,0:12:26.61,0:12:28.07,TVevaTNR,,0000,0000,0000,,Em cứ tự nhiên nhé.
Dialogue: 0,0:12:30.01,0:12:31.48,TVevaTNR,,0000,0000,0000,,Chị bảo đây là....
Dialogue: 0,0:12:32.65,0:12:34.11,TVevaTNR,,0000,0000,0000,,"hơi lộn xộn" à?
Dialogue: 0,0:12:34.48,0:12:37.78,TVevaTNR,,0000,0000,0000,,A! Xin lỗi! Em để thức ăn vào tủ lạnh \Nhộ chị được không?
Dialogue: 0,0:12:37.78,0:12:39.25,TVevaTNR,,0000,0000,0000,,D-Dạ.
Dialogue: 0,0:12:40.45,0:12:41.96,TVevaTNR,,0000,0000,0000,,Nước đá,
Dialogue: 0,0:12:41.96,0:12:43.42,TVevaTNR,,0000,0000,0000,,đồ ăn vặt
Dialogue: 0,0:12:43.86,0:12:45.42,TVevaTNR,,0000,0000,0000,,còn lại toàn bia là bia.
Dialogue: 0,0:12:46.13,0:12:48.19,TVevaTNR,,0000,0000,0000,,Chị ấy sống kiểu gì vậy?
Dialogue: 0,0:12:56.24,0:12:58.41,TVevaTNR,,0000,0000,0000,,Chị ơi. Cái tủ lạnh kia để gì vậy?
Dialogue: 0,0:12:58.41,0:13:02.07,TVevaTNR,,0000,0000,0000,,À, đừng quan tâm. Nó chắc còn đang ngủ!
Dialogue: 0,0:13:02.54,0:13:04.01,TVevaTNR,,0000,0000,0000,,Ngủ?
Dialogue: 0,0:13:05.78,0:13:07.88,TVevaTNR,,0000,0000,0000,,Mời cả nhà!
Dialogue: 0,0:13:07.88,0:13:09.35,TVevaTNR,,0000,0000,0000,,Mời cả nhà.
Dialogue: 0,0:13:16.99,0:13:21.52,TVevaTNR,,0000,0000,0000,,Đúng là không còn gì tuyệt hơn!
Dialogue: 0,0:13:23.30,0:13:27.03,TVevaTNR,,0000,0000,0000,,Em không ăn à? \NLà thức ăn nhanh nhưng ngon lắm đó.
Dialogue: 0,0:13:27.87,0:13:31.54,TVevaTNR,,0000,0000,0000,,Xin lỗi, Em không quen ăn thế này.
Dialogue: 0,0:13:31.54,0:13:34.30,TVevaTNR,,0000,0000,0000,,Không được! Đừng kén cá chọn canh!
Dialogue: 0,0:13:34.94,0:13:38.78,TVevaTNR,,0000,0000,0000,,Không, không phải là em....
Dialogue: 0,0:13:39.55,0:13:41.07,TVevaTNR,,0000,0000,0000,,Có vui không?
Dialogue: 0,0:13:41.92,0:13:44.28,TVevaTNR,,0000,0000,0000,,Cùng ăn tối thế này ấy!
Dialogue: 0,0:13:44.28,0:13:46.65,TVevaTNR,,0000,0000,0000,,Vâng...
Dialogue: 0,0:13:49.29,0:13:51.86,TVevaTNR,,0000,0000,0000,,Làm thêm nữa nào.
Dialogue: 0,0:13:51.86,0:13:54.36,TVevaTNR,,0000,0000,0000,,Oẳn tù tì...
Dialogue: 0,0:13:59.73,0:14:01.50,TVevaTNR,,0000,0000,0000,,Xin lỗi nhé, Shinji-kun.
Dialogue: 0,0:14:02.00,0:14:06.41,TVevaTNR,,0000,0000,0000,,Rồi! Công việc nhà đã được phân chia công bằng!
Dialogue: 0,0:14:07.07,0:14:08.07,TVevaTNR,,0000,0000,0000,,Dạ.
Dialogue: 0,0:14:08.07,0:14:08.58,TVevaTNR,,0000,0000,0000,,Nơi này giờ là nhà em.
Dialogue: 0,0:14:08.58,0:14:11.24,TVevaTNR,,0000,0000,0000,,Nơi này giờ là nhà em.
Dialogue: 0,0:14:11.81,0:14:13.94,TVevaTNR,,0000,0000,0000,,Vì thế nên cứ tự nhiên nhé.
Dialogue: 0,0:14:14.41,0:14:15.75,TVevaTNR,,0000,0000,0000,,Vâng.
Dialogue: 0,0:14:15.75,0:14:15.92,TVevaTNR,,0000,0000,0000,,Suốt ngày cứ" dạ vâng, dạ vâng".
Dialogue: 0,0:14:15.92,0:14:19.69,TVevaTNR,,0000,0000,0000,,Suốt ngày cứ" dạ vâng, dạ vâng".
Dialogue: 0,0:14:19.69,0:14:23.21,TVevaTNR,,0000,0000,0000,,Em có phải con trai không thế?\NĐàn ông lên nào?
Dialogue: 0,0:14:23.66,0:14:25.39,TVevaTNR,,0000,0000,0000,,Dạ.
Dialogue: 0,0:14:25.39,0:14:28.52,TVevaTNR,,0000,0000,0000,,Mà thôi.
Dialogue: 0,0:14:28.93,0:14:31.93,TVevaTNR,,0000,0000,0000,,Sao em không đi tắm cho quên hết chuyện không vui đi.
Dialogue: 0,0:14:31.93,0:14:34.06,TVevaTNR,,0000,0000,0000,,Tắm rửa làm sạch cả \Ncơ thể lẫn tâm hồn.
Dialogue: 0,0:14:43.01,0:14:45.41,TVevaTNR,,0000,0000,0000,,Misato-san!
Dialogue: 0,0:14:45.41,0:14:46.05,TVevaTNR,,0000,0000,0000,,Gì thế?
Dialogue: 0,0:14:46.05,0:14:46.91,TVevaTNR,,0000,0000,0000,,Gì thế?
Dialogue: 0,0:14:46.91,0:14:48.71,TVevaTNR,,0000,0000,0000,,C-C-C-C-Có....
Dialogue: 0,0:14:49.32,0:14:51.02,TVevaTNR,,0000,0000,0000,,Gì?
Dialogue: 0,0:14:51.02,0:14:54.51,TVevaTNR,,0000,0000,0000,,À, nó hả? Nó là một\N loại chim cánh cụt mới đấy.
Dialogue: 0,0:15:03.53,0:15:04.97,TVevaTNR,,0000,0000,0000,,Cái gì vậy?
Dialogue: 0,0:15:04.97,0:15:05.03,TVevaTNR,,0000,0000,0000,,Tên nó là Pen-pen.\NNó sống chung cùng chúng ta.
Dialogue: 0,0:15:05.03,0:15:08.47,TVevaTNR,,0000,0000,0000,,Tên nó là Pen-pen.\NNó sống chung cùng chúng ta.
Dialogue: 0,0:15:09.20,0:15:11.57,TVevaTNR,,0000,0000,0000,,Em định không che "khoai" lại sao?
Dialogue: 0,0:15:18.08,0:15:20.77,TVevaTNR,,0000,0000,0000,,Xem chừng mình cũng không tốt cho lắm.
Dialogue: 0,0:15:21.45,0:15:23.75,TVevaTNR,,0000,0000,0000,,Mà dù sao chắc nó cũng \Nhiểu con người mình rồi.
Dialogue: 0,0:15:24.99,0:15:26.75,TVevaTNR,,0000,0000,0000,,Katsuragi Misato-san.
Dialogue: 0,0:15:27.95,0:15:29.65,TVevaTNR,,0000,0000,0000,,Chị ấy không phải người xấu.
Dialogue: 0,0:15:30.96,0:15:33.39,TVevaTNR,,0000,0000,0000,,Tắm rửa làm sạch cả \Ncơ thể lẫn tâm hồn.
Dialogue: 0,0:15:33.39,0:15:37.35,TVevaTNR,,0000,0000,0000,,Nhưng đi tắm chỉ làm mình \Nnghĩ đến chuyện không vui thôi.
Dialogue: 0,0:15:38.70,0:15:40.17,TVevaTNR,,0000,0000,0000,,Bố....
Dialogue: 0,0:15:41.30,0:15:42.96,TVevaTNR,,0000,0000,0000,,và Ayanami Rei.
Dialogue: 0,0:15:46.21,0:15:48.23,TVevaTNR,,0000,0000,0000,,Rei hôm nay thế nào rồi?
Dialogue: 0,0:15:50.04,0:15:53.27,TVevaTNR,,0000,0000,0000,,Chiều nay ngài đến \Nbệnh viện thăm nó phải không?
Dialogue: 0,0:15:54.28,0:15:56.45,TVevaTNR,,0000,0000,0000,,Nó sẽ tiếp tục công việc sau 20 ngày nữa.
Dialogue: 0,0:15:56.45,0:16:00.35,TVevaTNR,,0000,0000,0000,,Cho đến lúc đó, chúng ta sẽ tái khởi động\NUnit 00 khỏi tình trạng đóng băng.
Dialogue: 0,0:16:01.12,0:16:03.92,TVevaTNR,,0000,0000,0000,,Thật là khó cho lũ trẻ.
Dialogue: 0,0:16:04.36,0:16:07.29,TVevaTNR,,0000,0000,0000,,Không ai khác có thể lái được Eva.
Dialogue: 0,0:16:07.29,0:16:09.86,TVevaTNR,,0000,0000,0000,,Còn sống ngày nào thì phải lái ngày đó.
Dialogue: 0,0:16:09.86,0:16:13.53,TVevaTNR,,0000,0000,0000,,Mặc kệ tụi nó nghĩ gì sao?
Dialogue: 0,0:16:31.79,0:16:34.62,TVevaTNR,,0000,0000,0000,,Phải, sau những thứ kinh khủng đã phải trải qua,
Dialogue: 0,0:16:34.62,0:16:36.68,TVevaTNR,,0000,0000,0000,,Không biết em ấy còn làm nữa không.
Dialogue: 0,0:16:37.46,0:16:40.39,TVevaTNR,,0000,0000,0000,,Nhiệm vụ của cậu là phải để ý tới nó, Misato.
Dialogue: 0,0:16:41.23,0:16:44.40,TVevaTNR,,0000,0000,0000,,Tớ chỉ sợ không biết \Nđối mặt với em ấy ra sao.
Dialogue: 0,0:16:44.40,0:16:48.10,TVevaTNR,,0000,0000,0000,,Cằn nhằn sao? Cậu là người muốn sống chung mà.
Dialogue: 0,0:16:48.10,0:16:49.57,TVevaTNR,,0000,0000,0000,,{\i1}Im đi!{\i0}
Dialogue: 0,0:16:50.67,0:16:54.90,TVevaTNR,,0000,0000,0000,,Lúc đó mình cũng chỉ coi cậu ấy như công cụ.
Dialogue: 0,0:16:55.64,0:16:57.27,TVevaTNR,,0000,0000,0000,,Mình cũng chẳng khác gì Ritsuko.
Dialogue: 0,0:16:57.98,0:17:00.24,TVevaTNR,,0000,0000,0000,,Mặc dù đã giết được con Angel đó....
Dialogue: 0,0:17:01.95,0:17:03.58,TVevaTNR,,0000,0000,0000,,mà chẳng vui gì hết....
Dialogue: 0,0:17:06.09,0:17:08.58,TVevaTNR,,0000,0000,0000,,Lại một trần nhà xa lạ nữa.
Dialogue: 0,0:17:10.62,0:17:15.25,TVevaTNR,,0000,0000,0000,,Cũng phải. Mình không quen chỗ nào trong thành phố này hết.
Dialogue: 0,0:17:16.43,0:17:18.56,TVevaTNR,,0000,0000,0000,,Nơi này là nhà của em.
Dialogue: 0,0:17:21.10,0:17:22.83,TVevaTNR,,0000,0000,0000,,Sao mình lại ở đây?
Dialogue: 0,0:17:45.33,0:17:47.03,TVevaTNR,,0000,0000,0000,,Phần đầu bị tổn thương!\NThiệt hai: không rõ!
Dialogue: 0,0:17:47.03,0:17:48.76,TVevaTNR,,0000,0000,0000,,Có vấn đề về duy trì hoạt động!
Dialogue: 0,0:17:48.76,0:17:49.73,TVevaTNR,,0000,0000,0000,,Báo cáo tình trạng!
Dialogue: 0,0:17:49.73,0:17:50.26,TVevaTNR,,0000,0000,0000,,Biểu đồ đồng bộ đang đảo ngược!\NMạch bắt đầu chạy ngược!
Dialogue: 0,0:17:50.26,0:17:52.60,TVevaTNR,,0000,0000,0000,,Biểu đồ đồng bộ đang đảo ngược!\NMạch bắt đầu chạy ngược!
Dialogue: 0,0:17:52.60,0:17:54.33,TVevaTNR,,0000,0000,0000,,Cắt mạch! Ngăn nó lại!
Dialogue: 0,0:17:54.33,0:17:57.24,TVevaTNR,,0000,0000,0000,,Không thể được! \NTín hiệu không được nhận!
Dialogue: 0,0:17:57.24,0:17:58.67,TVevaTNR,,0000,0000,0000,,Shinji-kun thế nào ?
Dialogue: 0,0:17:58.67,0:17:58.74,TVevaTNR,,0000,0000,0000,,Hệ thống hình ảnh không phản ứng.\NKhông rõ tình trạng của cậu ấyi!
Dialogue: 0,0:17:58.74,0:18:00.87,TVevaTNR,,0000,0000,0000,,Hệ thống hình ảnh không phản ứng.\NKhông rõ tình trạng của cậu ấy!
Dialogue: 0,0:18:00.87,0:18:02.44,TVevaTNR,,0000,0000,0000,,Unit 01 hoàn toàn bất động!
Dialogue: 0,0:18:02.44,0:18:04.18,TVevaTNR,,0000,0000,0000,,Misato!
Dialogue: 0,0:18:04.18,0:18:05.41,TVevaTNR,,0000,0000,0000,,Phải dừng việc này lại.
Dialogue: 0,0:18:05.41,0:18:08.08,TVevaTNR,,0000,0000,0000,,Hủy chiến dịch! \NƯu tiên giải cứu phi công!
Dialogue: 0,0:18:08.08,0:18:09.78,TVevaTNR,,0000,0000,0000,,Đẩy Entry Plug ra!
Dialogue: 0,0:18:09.78,0:18:12.19,TVevaTNR,,0000,0000,0000,,Không thể được! \NNó đã hoàn toàn mất kiểm soát!
