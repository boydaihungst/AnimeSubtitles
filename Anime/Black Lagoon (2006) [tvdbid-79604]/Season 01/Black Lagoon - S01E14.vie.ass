Dialogue: 0,0:01:59.20,0:02:00.57,[Assassin],,0000,0000,0000,,Thay xong chưa...
Dialogue: 0,0:02:00.57,0:02:01.37,[Assassin],,0000,0000,0000,,Chị hai?
Dialogue: 0,0:02:02.19,0:02:03.12,[Assassin],,0000,0000,0000,,Ừm...
Dialogue: 0,0:02:03.12,0:02:04.93,[Assassin],,0000,0000,0000,,Ta không nên ở đây nữa.
Dialogue: 0,0:02:06.06,0:02:08.44,[Assassin],,0000,0000,0000,,Thu dọn đồ dùng cần thiết rồi đi thôi.
Dialogue: 0,0:02:09.16,0:02:10.77,[Assassin],,0000,0000,0000,,Em biết rồi, chị hai.
Dialogue: 0,0:02:21.40,0:02:23.46,[Assassin],,0000,0000,0000,,Nào, anh hai.
Dialogue: 0,0:02:23.92,0:02:25.17,[Assassin],,0000,0000,0000,,Lại thành chị hai nhé.
Dialogue: 0,0:02:26.68,0:02:28.51,[Assassin],,0000,0000,0000,,Vâng, anh hai.
Dialogue: 0,0:02:31.29,0:02:32.67,[Assassin],,0000,0000,0000,,Mình đi nhé, chị hai?
Dialogue: 0,0:02:32.84,0:02:35.00,[Assassin],,0000,0000,0000,,Đừng quên vé máy bay với hộ chiếu đó.
Dialogue: 0,0:02:35.42,0:02:36.52,[Assassin],,0000,0000,0000,,Tất nhiên ạ.
Dialogue: 0,0:02:36.52,0:02:40.44,[Assassin],,0000,0000,0000,,Không có mấy món đó thì làm gì có nơi nào thèm chứa chấp chúng ta chứ.
Dialogue: 0,0:02:45.80,0:02:48.10,[Assassin],,0000,0000,0000,,Vậy ta đi thôi, anh hai.
Dialogue: 0,0:02:48.10,0:02:49.34,[Assassin],,0000,0000,0000,,Vâng thưa chị.
Dialogue: 0,0:03:15.00,0:03:15.75,[Black_Lagoon],,0000,0000,0000,,Vâng.
Dialogue: 0,0:03:15.75,0:03:16.61,[Black_Lagoon][01],,0000,0000,0000,,Vâng.
Dialogue: 0,0:03:16.61,0:03:17.96,[Black_Lagoon],,0000,0000,0000,,Đúng thế ạ.
Dialogue: 0,0:03:17.96,0:03:19.42,[Black_Lagoon],,0000,0000,0000,,Đúng như tôi đoán ạ.
Dialogue: 0,0:03:19.80,0:03:20.51,[Black_Lagoon],,0000,0000,0000,,Vâng.
Dialogue: 0,0:03:22.56,0:03:24.03,[Balalaika],,0000,0000,0000,,Cảm ơn cậu nhé, Rock.
Dialogue: 0,0:03:24.03,0:03:25.36,[Balalaika],,0000,0000,0000,,Tôi nợ cậu lần này đấy.
Dialogue: 0,0:03:26.39,0:03:27.86,[Balalaika],,0000,0000,0000,,Rock vừa hồi đáp ta xong.
Dialogue: 0,0:03:28.38,0:03:31.13,[Balalaika],,0000,0000,0000,,Lũ nhãi này có cùng gốc gác với Dracula cơ đấy.
Dialogue: 0,0:03:31.13,0:03:32.55,[Sub_Phụ],,0000,0000,0000,,Vậy là dân Romanian.
Dialogue: 0,0:03:33.79,0:03:35.14,[Sub_Phụ],,0000,0000,0000,,Romanian sao!
Dialogue: 0,0:03:35.56,0:03:39.90,[Sub_Phụ],,0000,0000,0000,,Đám lính Romanian ở Kabul\Nvẫn hay nói mấy câu đại loại như thế.
Dialogue: 0,0:03:40.29,0:03:41.31,[Sub_Phụ],,0000,0000,0000,,Thế mà nghĩ không ra.
Dialogue: 0,0:03:41.46,0:03:44.62,[Balalaika],,0000,0000,0000,,Không sao, càng về già con người ta \Nquên cái này cái nọ là chuyện thường tình.
Dialogue: 0,0:03:44.72,0:03:46.15,[Balalaika],,0000,0000,0000,,Cậu không cần áy náy đâu, Trung sĩ.
Dialogue: 0,0:03:46.15,0:03:47.39,[Balalaika],,0000,0000,0000,,Tôi cũng thế thôi.
Dialogue: 0,0:03:48.89,0:03:49.85,[Balalaika],,0000,0000,0000,,Trung sĩ này.
Dialogue: 0,0:03:49.85,0:03:52.11,[Balalaika],,0000,0000,0000,,Cái gã chủ hộp đêm ở đường Rachiada, Rowan ấy...
Dialogue: 0,0:03:52.11,0:03:54.55,[Balalaika],,0000,0000,0000,,Có buôn bán trái phép phim khiêu dâm phải không?
Dialogue: 0,0:03:54.90,0:03:56.85,[Sub_Phụ],,0000,0000,0000,,Dạ đúng thế ạ.
Dialogue: 0,0:03:56.85,0:03:58.04,[Sub_Phụ],,0000,0000,0000,,Rowan thì sao ạ?
Dialogue: 0,0:04:38.10,0:04:40.70,[Balalaika],,0000,0000,0000,,Đã tống khứ hết đám lằng nhằng hết chưa thế, Chang?
Dialogue: 0,0:04:41.08,0:04:42.30,[Hội_Tam_Hoàng],,0000,0000,0000,,Ờ.
Dialogue: 0,0:04:42.50,0:04:44.68,[Hội_Tam_Hoàng],,0000,0000,0000,,Gặp mặt tế nhị mà.
Dialogue: 0,0:04:44.68,0:04:47.00,[Hội_Tam_Hoàng],,0000,0000,0000,,Nếu là hẹn hò thì hay biết mấy.
Dialogue: 0,0:04:47.42,0:04:51.60,[Balalaika],,0000,0000,0000,,Trắng ra là anh không khoái cái trò chơi tanh ói máu này chứ gì?
Dialogue: 0,0:04:52.01,0:04:52.82,[Balalaika],,0000,0000,0000,,Chang...
Dialogue: 0,0:04:52.82,0:04:54.55,[Balalaika],,0000,0000,0000,,Đã bóc được mặt thủ phạm rồi.
Dialogue: 0,0:04:55.36,0:04:56.51,[Hội_Tam_Hoàng],,0000,0000,0000,,Hiểu rồi.
Dialogue: 0,0:04:57.09,0:04:58.99,[Hội_Tam_Hoàng],,0000,0000,0000,,Tin sốt dẻo đấy.
Dialogue: 0,0:04:58.99,0:05:00.59,[Hội_Tam_Hoàng],,0000,0000,0000,,Sao mà lần ra được vậy?
Dialogue: 0,0:05:01.37,0:05:03.78,[Balalaika],,0000,0000,0000,,Mất bao công sức...
Dialogue: 0,0:05:03.78,0:05:06.52,[Balalaika],,0000,0000,0000,,Tôi mới moi được thứ mình cần trong đống hàng bựa của tên Rowan đấy.
Dialogue: 0,0:05:06.95,0:05:08.62,[Hội_Tam_Hoàng],,0000,0000,0000,,Lão bán phim con heo Rowan à?
Dialogue: 0,0:05:09.27,0:05:11.96,[Hội_Tam_Hoàng],,0000,0000,0000,,Cô triệu lão tới văn phòng à?
Dialogue: 0,0:05:11.96,0:05:14.14,[Hội_Tam_Hoàng],,0000,0000,0000,,Chắc không đến nỗi xón ra quần đâu nhỉ.
Dialogue: 0,0:05:15.05,0:05:18.19,[Balalaika],,0000,0000,0000,,Thì cũng đủ để lão ướt quần con tí ti thôi mà.
Dialogue: 0,0:05:18.73,0:05:20.24,[Hội_Tam_Hoàng],,0000,0000,0000,,Thằng cha số chó thật.
Dialogue: 0,0:05:20.79,0:05:22.52,[Balalaika],,0000,0000,0000,,Cái tôi cần ở lão là...
Dialogue: 0,0:05:22.52,0:05:27.76,[Balalaika],,0000,0000,0000,,Mấy cuốn phim sex con nít hoặc có \Ndiễn viên chính là cặp song sinh gốc Romanian.
Dialogue: 0,0:05:28.43,0:05:30.83,[Balalaika],,0000,0000,0000,,Lão cống liền 250 bộ ngay.
Dialogue: 0,0:05:31.79,0:05:33.54,[Hội_Tam_Hoàng],,0000,0000,0000,,Thế thì càng số chó hơn nữa.
Dialogue: 0,0:05:33.54,0:05:38.59,[Balalaika],,0000,0000,0000,,Tôi phải chông mắt coi bằng hết đống phân \Nngựa đó từ đêm hôm trước đến trưa hôm nay...
Dialogue: 0,0:05:39.21,0:05:41.09,[Balalaika],,0000,0000,0000,,Cuối cùng thì, bingo.
Dialogue: 0,0:05:44.68,0:05:46.51,[Balalaika],,0000,0000,0000,,Hansel và Gretel.
Dialogue: 0,0:05:47.23,0:05:50.18,[Balalaika],,0000,0000,0000,,Đó là tên mà của chúng trong đoạn phim đó.
Dialogue: 0,0:05:51.07,0:05:53.52,[Balalaika],,0000,0000,0000,,Hậu quả của biến động chính trị ở Romania...
Dialogue: 0,0:05:53.52,0:05:55.49,[Balalaika],,0000,0000,0000,,Khiến rất nhiều trẻ con bị bán vào khu chợ đen...
Dialogue: 0,0:05:55.49,0:05:57.68,[Balalaika],,0000,0000,0000,,Cũng vì cha mẹ chúng không đủ điều kiện nuôi ăn chúng nữa.
Dialogue: 0,0:05:58.86,0:06:01.60,[Balalaika],,0000,0000,0000,,Một đám con hoang sản phẩm của một nền độc tài khốn nạn.
Dialogue: 0,0:06:01.90,0:06:05.85,[Hội_Tam_Hoàng],,0000,0000,0000,,Bị lũ bệnh hoạn giày vò như 1 thứ đồ chơi,\Nthậm chí còn bị làm thức ăn cho lợn nữa.
Dialogue: 0,0:06:06.54,0:06:10.99,[Hội_Tam_Hoàng],,0000,0000,0000,,Vậy làm sao những kẻ như chúng lại có thể thay đổi được số mệnh của mình thế?
Dialogue: 0,0:06:11.84,0:06:15.93,[Balalaika],,0000,0000,0000,,Để tìm trò mua vui mới, lũ bệnh hoạn kia đã bắt chúng chém giết lẫn nhau.
Dialogue: 0,0:06:16.53,0:06:20.60,[Balalaika],,0000,0000,0000,,Cảnh tượng lũ con nít xé xác nhau ra khiến chúng vô cùng phấn khích.
Dialogue: 0,0:06:21.13,0:06:23.31,[Balalaika],,0000,0000,0000,,Trải qua biết bao tháng ngày sinh tồn...
Dialogue: 0,0:06:23.31,0:06:27.25,[Balalaika],,0000,0000,0000,,Lũ trẻ đó thuộc lòng bài học giết người...
Dialogue: 0,0:06:27.25,0:06:29.21,[Balalaika],,0000,0000,0000,,Nhằm làm vui lòng lũ người lớn bệnh hoạn kia.
Dialogue: 0,0:06:30.40,0:06:33.04,[Balalaika],,0000,0000,0000,,Và cứ như thế, đám con nít đó dần chấp nhận sự thật phía trước chúng.
Dialogue: 0,0:06:34.52,0:06:36.62,[Balalaika],,0000,0000,0000,,Bỏ lại sau lưng bầu trời cao rộng...
Dialogue: 0,0:06:36.62,0:06:38.82,[Balalaika],,0000,0000,0000,,Để đắm chìm vào màn đêm kinh tởm.
Dialogue: 0,0:06:41.12,0:06:43.54,[Hội_Tam_Hoàng],,0000,0000,0000,,Như những con cún còi cho ngành giải trí vậy.
Dialogue: 0,0:06:44.42,0:06:46.25,[Hội_Tam_Hoàng],,0000,0000,0000,,Quả là quá thương tâm.
Dialogue: 0,0:06:46.63,0:06:49.63,[Hội_Tam_Hoàng],,0000,0000,0000,,Nhưng với dân xã hội đen thì đó là chuyện cơm bữa rồi.
Dialogue: 0,0:06:49.85,0:06:54.13,[Hội_Tam_Hoàng],,0000,0000,0000,,Có nhiều khi tôi cảm giác xung quanh\N mình chỉ đặc những thứ cặn bã mà thôi.
Dialogue: 0,0:06:54.61,0:06:57.87,[Hội_Tam_Hoàng],,0000,0000,0000,,Mấy thứ đạo đức hay công lý rẻ tiền không có đất sống ở đây đâu.
Dialogue: 0,0:06:58.12,0:07:01.65,[Hội_Tam_Hoàng],,0000,0000,0000,,Ở cái đất này, khái niệm cao đẹp đã bị phỉ nhổ từ lâu lắm rồi.
Dialogue: 0,0:07:02.21,0:07:04.42,[Hội_Tam_Hoàng],,0000,0000,0000,,Lòng thương cảm đáng dành cho lũ nhóc đó...
Dialogue: 0,0:07:04.42,0:07:08.09,[Hội_Tam_Hoàng],,0000,0000,0000,,Cùng lắm chỉ ngang bằng với lũ điên \Nbuôn tên lửa mà chắp tay niệm Phật thôi.
Dialogue: 0,0:07:08.20,0:07:10.68,[Balalaika],,0000,0000,0000,,Để tôi nói cho anh hay...
Dialogue: 0,0:07:10.68,0:07:13.02,[Balalaika],,0000,0000,0000,,Công lý chả là cái đệt gì cả...
Dialogue: 0,0:07:13.02,0:07:15.27,[Balalaika],,0000,0000,0000,,Cái tôi cần là tiền và chữ tín mà thôi.
Dialogue: 0,0:07:19.02,0:07:21.59,[Balalaika],,0000,0000,0000,,Cũng nhờ lão Rowan, mà sự vụ đơn giản bớt rồi.
Dialogue: 0,0:07:23.98,0:07:25.23,[Hội_Tam_Hoàng],,0000,0000,0000,,Hiểu rồi.
Dialogue: 0,0:07:25.23,0:07:26.97,[Hội_Tam_Hoàng],,0000,0000,0000,,Vậy ra ngọn nguồn là đây sao.
Dialogue: 0,0:07:27.68,0:07:30.67,[Hội_Tam_Hoàng],,0000,0000,0000,,Thí mạng một thằng lính quèn, chứng cứ ngoại phạm hoàn hảo ha?
Dialogue: 0,0:07:30.67,0:07:32.39,[Balalaika],,0000,0000,0000,,Tính chơi đểu nhau đây.
Dialogue: 0,0:07:32.39,0:07:34.46,[Balalaika],,0000,0000,0000,,Chúng nghĩ mình là ai thế không biết.
Dialogue: 0,0:07:34.46,0:07:37.71,[Balalaika],,0000,0000,0000,,Lần này chúng tự rước họa sát thân vào người rồi.
Dialogue: 0,0:07:38.40,0:07:41.26,[Balalaika],,0000,0000,0000,,Nghe bảo xác bên anh bị nổ tanh banh ra luôn à.
Dialogue: 0,0:07:41.54,0:07:43.73,[Hội_Tam_Hoàng],,0000,0000,0000,,Dù nguyên nhân là gì chăng nữa...
Dialogue: 0,0:07:43.73,0:07:45.54,[Hội_Tam_Hoàng],,0000,0000,0000,,Cái giá chúng phải trả sẽ rất đắt đấy.
Dialogue: 0,0:07:46.42,0:07:48.01,[Sub_Phụ],,0000,0000,0000,,Thế là sao!?
Dialogue: 0,0:07:48.01,0:07:48.77,[Sub_Phụ],,0000,0000,0000,,Chó chết!
Dialogue: 0,0:07:49.48,0:07:52.09,[Sub_Phụ],,0000,0000,0000,,Tao bảo là chỉ muốn cảnh cáo con mụ cáo già đó thôi...
Dialogue: 0,0:07:52.09,0:07:54.55,[Sub_Phụ],,0000,0000,0000,,Sao lại còn lôi cục xác đó về làm gì!
Dialogue: 0,0:07:54.96,0:07:56.13,[Sub_Phụ],,0000,0000,0000,,Sếp à.
Dialogue: 0,0:07:56.13,0:07:56.71,[Sub_Phụ],,0000,0000,0000,,Hả?
Dialogue: 0,0:07:56.86,0:07:59.17,[Sub_Phụ],,0000,0000,0000,,Sao ta không bỏ luôn vụ này đi?
Dialogue: 0,0:08:00.85,0:08:03.40,[Sub_Phụ],,0000,0000,0000,,Ta mà rút lúc này thì vẫn còn cơ...
Dialogue: 0,0:08:03.40,0:08:05.67,[Sub_Phụ],,0000,0000,0000,,Thoát khỏi cái đống hổ lốn ngoài kia đó ạ.
Dialogue: 0,0:08:06.23,0:08:08.41,[Sub_Phụ],,0000,0000,0000,,Rồi sau đó mọi chuyện dính dáng đến lũ nhãi bệnh hoạn...
Dialogue: 0,0:08:08.41,0:08:09.35,[Sub_Phụ],,0000,0000,0000,,Sẽ rơi vào quên lãng thôi ạ.
Dialogue: 0,0:08:14.33,0:08:16.33,[Sub_Phụ],,0000,0000,0000,,Sao một đứa lính hôi như mày...
Dialogue: 0,0:08:16.33,0:08:19.71,[Sub_Phụ],,0000,0000,0000,,Mà dám trả treo lại tao hả!
Dialogue: 0,0:08:19.71,0:08:22.10,[Sub_Phụ],,0000,0000,0000,,Nhưng sếp à! Mọi việc đã đi quá xa rồi!
Dialogue: 0,0:08:23.98,0:08:25.60,[Sub_Phụ],,0000,0000,0000,,Chứ mày nghĩ vì sao...
Dialogue: 0,0:08:25.60,0:08:30.06,[Sub_Phụ],,0000,0000,0000,,Chúng ta lại thuê lũ nhóc khốn nạn đó nào!?
Dialogue: 0,0:08:31.44,0:08:34.82,[Balalaika],,0000,0000,0000,,Anh không nghĩ là đã đến lúc chúng ta\Nthanh lọc thành phố rồi ư, Chang?
Dialogue: 0,0:08:35.95,0:08:38.33,[Hội_Tam_Hoàng],,0000,0000,0000,,Ra ngoài lề của cuộc họp rồi đấy.
Dialogue: 0,0:08:39.82,0:08:42.03,[Hội_Tam_Hoàng],,0000,0000,0000,,Lại muốn gây nội chiến nữa à?
Dialogue: 0,0:08:42.22,0:08:45.17,[Balalaika],,0000,0000,0000,,Tôi thích anh gọi đó là bạo động có tổ chức hơn.
Dialogue: 0,0:08:45.17,0:08:46.95,[Balalaika],,0000,0000,0000,,Bọn tôi có động cơ chính đáng mà.
Dialogue: 0,0:08:47.75,0:08:50.64,[Hội_Tam_Hoàng],,0000,0000,0000,,Vậy ra là cái cớ để chém nhau à.
Dialogue: 0,0:08:50.64,0:08:53.12,[Hội_Tam_Hoàng],,0000,0000,0000,,Nói năng văn vẻ kiểu đó không hợp với cô đâu.
Dialogue: 0,0:08:53.68,0:08:56.35,[Balalaika],,0000,0000,0000,,Dù có hay không có cái cớ đó thì cũng thế thôi.
Dialogue: 0,0:08:57.04,0:08:59.51,[Balalaika],,0000,0000,0000,,Đống chó má đó có hay không cũng thế thôi.
Dialogue: 0,0:09:00.81,0:09:02.71,[Balalaika],,0000,0000,0000,,Chung hội hay tảng lơ đi.
Dialogue: 0,0:09:02.71,0:09:03.98,[Balalaika],,0000,0000,0000,,Tùy ý anh cả đấy.
Dialogue: 0,0:09:05.64,0:09:06.13,[Hội_Tam_Hoàng],,0000,0000,0000,,Rồi.
Dialogue: 0,0:09:06.13,0:09:06.63,[Hội_Tam_Hoàng][00],,0000,0000,0000,,Rồi.
Dialogue: 0,0:09:06.99,0:09:09.90,[Hội_Tam_Hoàng],,0000,0000,0000,,Dù gì mấy việc này tôi cũng chẳng cần phải qua ý kiến Tổng hội mà.
Dialogue: 0,0:09:10.10,0:09:14.02,[Hội_Tam_Hoàng],,0000,0000,0000,,Sức mạnh là thứ duy nhất trên đời này tôi tin vào.
Dialogue: 0,0:09:14.22,0:09:17.21,[Balalaika],,0000,0000,0000,,Vậy nghĩa là bọn tôi có thêm một tay súng hảo hạng bên cạnh đúng không?
Dialogue: 0,0:09:17.77,0:09:18.98,[Balalaika],,0000,0000,0000,,Nhờ anh cả đấy...
Dialogue: 0,0:09:18.98,0:09:19.74,[Balalaika],,0000,0000,0000,,Babe.
Dialogue: 0,0:09:20.05,0:09:22.10,[Hội_Tam_Hoàng],,0000,0000,0000,,Tính tôi không khoái dính vào mấy trò vô bổ này...
Dialogue: 0,0:09:23.10,0:09:26.02,[Hội_Tam_Hoàng],,0000,0000,0000,,Ngặt nỗi giờ mình lại có địa vị mới chết chứ. Rõ phiền hà.
Dialogue: 0,0:09:26.44,0:09:28.26,[Hội_Tam_Hoàng],,0000,0000,0000,,A, còn cái này.
Dialogue: 0,0:09:28.48,0:09:30.93,[Hội_Tam_Hoàng],,0000,0000,0000,,Bỏ cái kiểu gọi "Babe" đó đi.
Dialogue: 0,0:09:30.93,0:09:32.85,[Hội_Tam_Hoàng],,0000,0000,0000,,Không ưa cái tên đó tí nào.
Dialogue: 0,0:09:41.54,0:09:42.27,[Sub_Phụ],,0000,0000,0000,,{\i1}Đội trưởng?{\i0}
Dialogue: 0,0:09:42.43,0:09:44.94,[Balalaika],,0000,0000,0000,,Trung sĩ. Chang đồng ý điều kiện bên ta rồi.
Dialogue: 0,0:09:45.20,0:09:48.47,[Balalaika],,0000,0000,0000,,Tính từ lúc này, ta sẽ chung thuyền với Hội Tam Hoàng đấy.
Dialogue: 0,0:09:48.67,0:09:49.61,[Sub_Phụ],,0000,0000,0000,,{\i1}Rõ ạ.{\i0}
Dialogue: 0,0:09:49.85,0:09:51.74,[Balalaika],,0000,0000,0000,,Nhắn với các anh em.
Dialogue: 0,0:09:51.95,0:09:54.04,[Balalaika],,0000,0000,0000,,Bày sẵn trận địa, đúng 9 giờ 5 phút.
Dialogue: 0,0:09:54.36,0:09:55.58,[Balalaika],,0000,0000,0000,,Văn kiện...
Dialogue: 0,0:09:55.58,0:09:59.20,[Balalaika],,0000,0000,0000,,"Quy chế 217, Case Five".
Dialogue: 0,0:09:59.43,0:10:01.64,[Sub_Phụ],,0000,0000,0000,,Dàn sẵn trận địa, đúng 9 giờ 5 phút.
Dialogue: 0,0:10:01.64,0:10:04.91,[Sub_Phụ],,0000,0000,0000,,Là dạng tiểu chiến dịch lấy lòng thành phố làm trận địa ạ.
Dialogue: 0,0:10:05.11,0:10:05.71,[Balalaika],,0000,0000,0000,,{\i1}Đúng.{\i0}
Dialogue: 0,0:10:05.93,0:10:07.44,[Balalaika],,0000,0000,0000,,Càng hỗn loạn càng tốt.
Dialogue: 0,0:10:07.44,0:10:10.83,[Balalaika],,0000,0000,0000,,Hãy biến thành phố này thành lễ hội cho \Nnhững kẻ cuồng lên vì đống tiền thưởng nào.
Dialogue: 0,0:10:10.83,0:10:13.04,[Sub_Phụ],,0000,0000,0000,,{\i1}Không khí lễ hội là nhất đó, đội trưởng.{\i0}
Dialogue: 0,0:10:13.90,0:10:16.54,[Sub_Phụ],,0000,0000,0000,,{\i1}Nếu thêm vài tiếng súng giúp vui thì còn xôm trò nữa.{\i0}
Dialogue: 0,0:10:16.78,0:10:17.96,[Balalaika],,0000,0000,0000,,{\i1}Nói chuẩn đấy, Trung sĩ.{\i0}
Dialogue: 0,0:10:18.31,0:10:21.18,[Balalaika],,0000,0000,0000,,Đúng là cái ta thành thạo nhất vẫn là đánh trận nhỉ.
Dialogue: 0,0:10:21.71,0:10:22.98,[Balalaika],,0000,0000,0000,,Phải làm cho ra trò.
Dialogue: 0,0:10:23.14,0:10:25.47,[Sub_Phụ],,0000,0000,0000,,Mày có biết thằng già ở Palermo đó...
Dialogue: 0,0:10:25.77,0:10:27.92,[Sub_Phụ],,0000,0000,0000,,Nó coi trọng...
Dialogue: 0,0:10:27.92,0:10:30.01,[Sub_Phụ],,0000,0000,0000,,Cái thành phố...
Dialogue: 0,0:10:30.01,0:10:31.90,[Sub_Phụ],,0000,0000,0000,,Khỉ ho cò gáy này đến thế nào không!
Dialogue: 0,0:10:33.92,0:10:38.20,[Sub_Phụ],,0000,0000,0000,,Mấy lão ấy còn nuôi cơm tao là vì chúng thèm muốn cái mảnh đất này thôi!
Dialogue: 0,0:10:39.01,0:10:41.43,[Sub_Phụ],,0000,0000,0000,,Banh tai mà nghe cho rõ đây, thằng khốn nạn!
Dialogue: 0,0:10:41.60,0:10:46.16,[Sub_Phụ],,0000,0000,0000,,Lúc này tao mà bó cẳng chịu trận thì đến buổi\N họp đầu lĩnh sắp tới có mà đi ăn phân cả lũ!?
Dialogue: 0,0:10:47.72,0:10:48.38,[Sub_Phụ],,0000,0000,0000,,Chó chết!
Dialogue: 0,0:10:48.38,0:10:49.01,[Sub_Phụ],,0000,0000,0000,,Dạ...
Dialogue: 0,0:10:49.01,0:10:49.69,[Sub_Phụ],,0000,0000,0000,,Dạ thưa... Sếp à?
Dialogue: 0,0:10:49.69,0:10:50.52,[Sub_Phụ],,0000,0000,0000,,Câm đi!
Dialogue: 0,0:10:50.52,0:10:51.60,[Sub_Phụ],,0000,0000,0000,,Nhưng...
Dialogue: 0,0:10:51.60,0:10:52.49,[Sub_Phụ],,0000,0000,0000,,Thưa...
Dialogue: 0,0:10:52.49,0:10:53.34,[Sub_Phụ],,0000,0000,0000,,Bọn sinh đôi đó
Dialogue: 0,0:11:08.63,0:11:10.75,[Sub_Phụ],,0000,0000,0000,,L-Lũ nhóc đó sao...
Dialogue: 0,0:11:15.29,0:11:18.72,[Sub_Phụ],,0000,0000,0000,,Đ-Đã bảo chúng mày không được đến đây cơ mà!
Dialogue: 0,0:11:18.72,0:11:19.93,[Sub_Phụ],,0000,0000,0000,,Thích cái gì hả!?
Dialogue: 0,0:11:25.71,0:11:28.02,[Assassin],,0000,0000,0000,,Hai đứa bọn cháu đã bàn kĩ với nhau, và thống nhất là.
Dialogue: 0,0:11:28.21,0:11:29.77,[Sub_Phụ],,0000,0000,0000,,Cái chó gì hả!?
Dialogue: 0,0:11:30.14,0:11:30.97,[Assassin],,0000,0000,0000,,Vâng.
Dialogue: 0,0:11:31.29,0:11:33.32,[Assassin],,0000,0000,0000,,Món chính hôm nay sẽ là súp cải đỏ.
Dialogue: 0,0:11:33.99,0:11:36.35,[Assassin],,0000,0000,0000,,Khai vị là macaroni.
Dialogue: 0,0:11:45.76,0:11:48.46,[Sub_Phụ],,0000,0000,0000,,M-Mày đùa với tao à!?
Dialogue: 0,0:11:48.46,0:11:50.13,[Sub_Phụ],,0000,0000,0000,,L-L-Lũ chó!
Dialogue: 0,0:11:50.20,0:11:52.67,[Assassin],,0000,0000,0000,,Món macaroni thế là vừa chín rồi nhỉ.
Dialogue: 0,0:11:53.50,0:11:55.39,[Sub_Phụ],,0000,0000,0000,,Lũ nhãi chết bầm!
Dialogue: 0,0:11:55.81,0:11:57.70,[Sub_Phụ],,0000,0000,0000,,Muốn ngỏm sớm rồi chứ gì!?
Dialogue: 0,0:12:15.46,0:12:16.67,[Sub_Phụ],,0000,0000,0000,,Chang đại ca.
Dialogue: 0,0:12:16.67,0:12:18.93,[Sub_Phụ],,0000,0000,0000,,Bọn em đã bao vây toàn bộ khu nhà rồi.
Dialogue: 0,0:12:18.93,0:12:21.13,[Sub_Phụ],,0000,0000,0000,,Chỉ còn chờ lệnh của anh nữa thôi.
Dialogue: 0,0:12:24.64,0:12:25.44,[Hội_Tam_Hoàng],,0000,0000,0000,,Cho.
Dialogue: 0,0:12:25.44,0:12:25.93,[Sub_Phụ],,0000,0000,0000,,Vâng?
Dialogue: 0,0:12:26.37,0:12:28.53,[Hội_Tam_Hoàng],,0000,0000,0000,,Liệu mà cúi đầu thấp xuống đi.
Dialogue: 0,0:12:28.53,0:12:28.81,[Sub_Phụ],,0000,0000,0000,,Hả!?
Dialogue: 0,0:12:35.01,0:12:37.35,[Hội_Tam_Hoàng],,0000,0000,0000,,Phải đổi sang thể loại săn bắn rồi.
Dialogue: 0,0:12:44.16,0:12:46.26,[Hội_Tam_Hoàng],,0000,0000,0000,,Gọi cho Hotel Moscow mau.
Dialogue: 0,0:12:46.26,0:12:48.85,[Hội_Tam_Hoàng],,0000,0000,0000,,Bảo chuẩn bị lễ vật hậu tạ sẵn sàng đi.
Dialogue: 0,0:12:49.69,0:12:50.41,[Neutralist],,0000,0000,0000,,{\i1}Revy.
Dialogue: 0,0:12:50.41,0:12:51.78,[Neutralist],,0000,0000,0000,,{\i1}Đám cớm có hành động rồi.{\i0}
Dialogue: 0,0:12:52.16,0:12:55.40,[Neutralist],,0000,0000,0000,,Cả lô xe đổ xuống trục đường chính rồi này.
Dialogue: 0,0:12:55.40,0:12:58.59,[Neutralist],,0000,0000,0000,,Nghe bảo cớm đánh hơi được manh mối ở chỗ gia đình Verrocchio đấy.
Dialogue: 0,0:12:58.97,0:12:59.96,[Neutralist],,0000,0000,0000,,Revy!
Dialogue: 0,0:12:59.96,0:13:01.84,[Neutralist],,0000,0000,0000,,Cứ thế này thì khỏi có tiền nong gì đâu!
Dialogue: 0,0:13:02.54,0:13:05.32,[Black_Lagoon],,0000,0000,0000,,Biết rồi. Nhỏ mồm lại đi, Eda.
Dialogue: 0,0:13:05.32,0:13:06.37,[Black_Lagoon],,0000,0000,0000,,Thế, gặp ở đâu nào?
Dialogue: 0,0:13:06.61,0:13:08.89,[Neutralist],,0000,0000,0000,,{\i1}Joey có thuê phòng ở Palcana Square đó.
Dialogue: 0,0:13:08.89,0:13:10.12,[Neutralist],,0000,0000,0000,,{\i1}Lượn nhanh lên!{\i0}
Dialogue: 0,0:13:13.35,0:13:14.20,[Black_Lagoon],,0000,0000,0000,,Không hay rồi.
Dialogue: 0,0:13:14.44,0:13:16.48,[Black_Lagoon],,0000,0000,0000,,Chốt bom đã bung.
Dialogue: 0,0:13:17.42,0:13:19.47,[Black_Lagoon],,0000,0000,0000,,Giờ thì không ai có thể cản nổi quả bom này nổ nữa rồi.
Dialogue: 0,0:13:20.46,0:13:21.26,[Sub_Phụ],,0000,0000,0000,,Các đội!
Dialogue: 0,0:13:21.26,0:13:22.21,[Sub_Phụ],,0000,0000,0000,,Nghiêm!
Dialogue: 0,0:13:22.76,0:13:24.13,[Balalaika],,0000,0000,0000,,Các đồng chí.
Dialogue: 0,0:13:24.13,0:13:26.72,[Balalaika],,0000,0000,0000,,Vừa mới đêm nay, nguyên gia đình Verrocchio đã bị xóa xổ.
Dialogue: 0,0:13:27.17,0:13:28.76,[Balalaika],,0000,0000,0000,,Dù thế, điều đó vẫn nằm trong dự liệu của ta.
Dialogue: 0,0:13:28.76,0:13:30.25,[Balalaika],,0000,0000,0000,,Kế hoạch vẫn tiến hành như đã định.
Dialogue: 0,0:13:30.64,0:13:32.75,[Balalaika],,0000,0000,0000,,Chiến dịch chính thức bắt đầu!
Dialogue: 0,0:13:33.87,0:13:35.74,[Balalaika],,0000,0000,0000,,Anh em đồng chí đều biết.
Dialogue: 0,0:13:36.11,0:13:37.84,[Balalaika],,0000,0000,0000,,Binh nhì Sakharov...
Dialogue: 0,0:13:37.84,0:13:40.98,[Balalaika],,0000,0000,0000,,Và hạ sĩ Menshov\Nđều là những đồng chí thân thiết của chúng ta.
Dialogue: 0,0:13:42.35,0:13:45.88,[Balalaika],,0000,0000,0000,,Ta có nghĩa vụ báo thù để họ có an nghỉ về nơi vĩnh hằng!
Dialogue: 0,0:13:45.88,0:13:49.91,[Balalaika],,0000,0000,0000,,Đêm nay vong linh đồng đội đã khuất ấy sẽ hiện về thắp lên ánh lửa phục thù!
Dialogue: 0,0:13:50.29,0:13:52.17,[Balalaika],,0000,0000,0000,,Gương cao họng súng công lí Kalashnikovs...
Dialogue: 0,0:13:52.17,0:13:55.47,[Balalaika],,0000,0000,0000,,Thấm hết nước mắt nơi khẩu AK-74 5.45 li này!
Dialogue: 0,0:14:04.24,0:14:05.38,[Sub_Phụ],,0000,0000,0000,,Chang đại ca.
Dialogue: 0,0:14:05.38,0:14:07.17,[Sub_Phụ],,0000,0000,0000,,Đã có hồi đáp từ Hotel Moscow.
Dialogue: 0,0:14:07.17,0:14:10.30,[Sub_Phụ],,0000,0000,0000,,"Tình thế rất nguy cấp. Lui 1 bước."
Dialogue: 0,0:14:11.68,0:14:13.27,[Hội_Tam_Hoàng],,0000,0000,0000,,Thế là khôn đấy.
Dialogue: 0,0:14:14.08,0:14:16.58,[Hội_Tam_Hoàng],,0000,0000,0000,,Dù sao thì cũng quá trễ rồi. Cho.
Dialogue: 0,0:14:16.58,0:14:17.71,[Hội_Tam_Hoàng],,0000,0000,0000,,Cúi xuống!
Dialogue: 0,0:14:24.12,0:14:25.09,[Hội_Tam_Hoàng],,0000,0000,0000,,Cúi xuống!!!
Dialogue: 0,0:14:40.71,0:14:41.59,[Assassin],,0000,0000,0000,,Không tệ!
Dialogue: 0,0:14:41.59,0:14:42.67,[Assassin],,0000,0000,0000,,Cũng có nghề đó!
Dialogue: 0,0:14:42.67,0:14:43.61,[Hội_Tam_Hoàng],,0000,0000,0000,,Cảm ơn nhé...
Dialogue: 0,0:14:43.61,0:14:44.44,[Hội_Tam_Hoàng],,0000,0000,0000,,Tiểu cô nương!
Dialogue: 0,0:14:44.91,0:14:47.64,[Assassin],,0000,0000,0000,,Tiếc là bọn cháu không có dư thời gian mà chơi với chú đâu.
Dialogue: 0,0:14:48.28,0:14:49.58,[Assassin],,0000,0000,0000,,Để dành lần sau nhé.
Dialogue: 0,0:14:50.92,0:14:52.40,[Hội_Tam_Hoàng],,0000,0000,0000,,Giờ tới làm đệt gì nữa.
Dialogue: 0,0:14:54.39,0:14:56.55,[Sub_Phụ],,0000,0000,0000,,Có nổ súng ở khu gia đình Verrocchio.
Dialogue: 0,0:14:56.55,0:14:59.49,[Sub_Phụ],,0000,0000,0000,,Watsap hiện đang thẩm vấn hội Tam hoàng.
Dialogue: 0,0:14:59.86,0:15:02.19,[Sub_Phụ],,0000,0000,0000,,Đống vàng đã gần đến miệng rồi.
Dialogue: 0,0:15:02.69,0:15:04.87,[Sub_Phụ],,0000,0000,0000,,Mới là màn chào đầu của buổi tiệc Carnival Night thôi.
Dialogue: 0,0:15:05.00,0:15:06.02,[Sub_Phụ],,0000,0000,0000,,Hallelujah!
Dialogue: 0,0:15:06.10,0:15:08.56,[Sub_Phụ],,0000,0000,0000,,Nghe này. Mục tiêu là chiếc xe sedan màu đen gốc Nhật Bản.
Dialogue: 0,0:15:08.57,0:15:10.97,[Sub_Phụ],,0000,0000,0000,,Nhưng chúng mà vứt xe lại, là vô phương tìm kiếm à.
Dialogue: 0,0:15:10.97,0:15:11.97,[Sub_Phụ],,0000,0000,0000,,Lo gì chứ.
Dialogue: 0,0:15:11.97,0:15:13.44,[Sub_Phụ],,0000,0000,0000,,Thằng nào phóng qua là phơ hết.
Dialogue: 0,0:15:13.44,0:15:14.66,[Sub_Phụ],,0000,0000,0000,,Này, lậm quá đấy!
Dialogue: 0,0:15:14.66,0:15:15.55,[Neutralist],,0000,0000,0000,,Revy.
Dialogue: 0,0:15:15.94,0:15:16.79,[Neutralist],,0000,0000,0000,,Qua đây coi.
Dialogue: 0,0:15:18.24,0:15:19.45,[Black_Lagoon],,0000,0000,0000,,Gì thế, Eda?
Dialogue: 0,0:15:19.64,0:15:21.40,[Neutralist],,0000,0000,0000,,Giờ mới để ý.
Dialogue: 0,0:15:21.40,0:15:22.55,[Neutralist],,0000,0000,0000,,Có cái này kì quái lắm, Revy.
Dialogue: 0,0:15:22.81,0:15:24.12,[Black_Lagoon],,0000,0000,0000,,Gì nữa đây?
Dialogue: 0,0:15:24.12,0:15:25.68,[Black_Lagoon],,0000,0000,0000,,Bỏ cái trò vòng vo tam quốc đi.
Dialogue: 0,0:15:26.08,0:15:27.79,[Neutralist],,0000,0000,0000,,Balalaika chứ gì.
Dialogue: 0,0:15:27.79,0:15:31.02,[Neutralist],,0000,0000,0000,,Trong vụ này không kẻ nào khao khát phục thù hơn bà mụ ấy...
Dialogue: 0,0:15:31.02,0:15:32.90,[Neutralist],,0000,0000,0000,,Vậy mà vẫn chẳng thấy tăm hơi mụ ấy đâu cả.
Dialogue: 0,0:15:33.48,0:15:34.49,[Black_Lagoon],,0000,0000,0000,,Ờ~
Dialogue: 0,0:15:34.49,0:15:35.82,[Black_Lagoon],,0000,0000,0000,,Nói mới thấy.
Dialogue: 0,0:15:35.82,0:15:36.77,[Neutralist],,0000,0000,0000,,Đúng không?
Dialogue: 0,0:15:36.77,0:15:40.83,[Neutralist],,0000,0000,0000,,Nếu đúng chỗ này là tâm điểm,\Nthì cả lũ ở đây đã bị đá văng đi từ hồi nào rồi.
Dialogue: 0,0:15:40.83,0:15:41.29,[Neutralist],,0000,0000,0000,,Vậy...
Dialogue: 0,0:15:41.29,0:15:42.86,[Neutralist],,0000,0000,0000,,Chính xác hai đứa nhóc ở đâu?
Dialogue: 0,0:15:43.20,0:15:45.74,[Black_Lagoon],,0000,0000,0000,,Chỉ là hai đứa nhóc vô tư thôi...
Dialogue: 0,0:15:45.74,0:15:48.34,[Black_Lagoon],,0000,0000,0000,,Nhưng mồi săn của chúng thì đã rõ, chỉ có thể là Balalaika thôi.
Dialogue: 0,0:15:48.34,0:15:50.31,[Black_Lagoon],,0000,0000,0000,,Còn lại chắc chắn là nghi binh...
Dialogue: 0,0:15:50.31,0:15:51.08,[Black_Lagoon],,0000,0000,0000,,Không...
Dialogue: 0,0:15:51.08,0:15:52.74,[Black_Lagoon],,0000,0000,0000,,Cùng lắm là án binh chờ thời.
Dialogue: 0,0:15:55.05,0:15:59.54,[Neutralist],,0000,0000,0000,,Balalaika đã xài đến bọn Visotonikis\N để xử lí hai đứa sinh đôi mắc dịch đó cơ mà.
Dialogue: 0,0:16:00.02,0:16:02.64,[Black_Lagoon],,0000,0000,0000,,Đám lính đó đều là dân rành nghề cả.
Dialogue: 0,0:16:02.64,0:16:03.94,[Black_Lagoon],,0000,0000,0000,,Ra tay kín đừng hỏi luôn.
Dialogue: 0,0:16:04.76,0:16:06.66,[Black_Lagoon],,0000,0000,0000,,Còn hai đứa kia thì tính lừa chúng.
Dialogue: 0,0:16:06.72,0:16:10.79,[Neutralist],,0000,0000,0000,,Dân tình thì làm như đang đi săn hươu ở đồi Montana vậy.
Dialogue: 0,0:16:10.79,0:16:13.77,[Neutralist],,0000,0000,0000,,Có điều mồi đéo phải là hươu. Là sói mới đúng.
Dialogue: 0,0:16:13.77,0:16:15.09,[Neutralist],,0000,0000,0000,,Khó nhằn đây.
Dialogue: 0,0:16:15.09,0:16:15.82,[Black_Lagoon],,0000,0000,0000,,Biết rồi.
Dialogue: 0,0:16:16.13,0:16:18.80,[Black_Lagoon],,0000,0000,0000,,Chúng mà là hạng tép hôi dính bẫy cú một...
Dialogue: 0,0:16:18.80,0:16:20.54,[Black_Lagoon],,0000,0000,0000,,Thì đời chúng đã mạt từ năm nảo năm nào rồi.
Dialogue: 0,0:16:20.77,0:16:24.17,[Neutralist],,0000,0000,0000,,Thứ vô học như cô em mà cũng lanh lợi gớm nhỉ, Revy.
Dialogue: 0,0:16:24.34,0:16:29.61,[Neutralist],,0000,0000,0000,,Vậy, chuồn ngõ nào thì ta\N đuổi kịp đám Hotel Moscow nhanh nhất nào?
Dialogue: 0,0:16:30.25,0:16:33.91,[Black_Lagoon],,0000,0000,0000,,Băng qua chợ Chalquam\Nrồi chạy 1 mạch theo đường Saatanam.
Dialogue: 0,0:16:33.99,0:16:35.28,[Black_Lagoon],,0000,0000,0000,,Nhưng cái chính là...
Dialogue: 0,0:16:35.28,0:16:38.75,[Black_Lagoon],,0000,0000,0000,,Mụ cũng là dân vô học luôn, đồ quỷ cái thối thây!
Dialogue: 0,0:16:39.29,0:16:41.32,[Balalaika],,0000,0000,0000,,{\i1}Xin lỗi nhiều nhé, Chang.{\i0}
Dialogue: 0,0:16:41.66,0:16:45.96,[Hội_Tam_Hoàng],,0000,0000,0000,,Nếu biết có lũ nhóc đó ở đây,\Ntôi đã kéo mấy thằng đàn em cao tay đi theo rồi.
Dialogue: 0,0:16:46.56,0:16:48.83,[Hội_Tam_Hoàng],,0000,0000,0000,,Mà, cũng chuồn sớm đây.
Dialogue: 0,0:16:48.84,0:16:50.32,[Hội_Tam_Hoàng],,0000,0000,0000,,Cực lắm rồi.
Dialogue: 0,0:16:50.84,0:16:51.82,[Hội_Tam_Hoàng],,0000,0000,0000,,{\i1}À!
Dialogue: 0,0:16:51.82,0:16:53.33,[Hội_Tam_Hoàng],,0000,0000,0000,,{\i1}Phần lão Watsap cứ để tôi lo.{\i0}
Dialogue: 0,0:16:54.01,0:16:56.69,[Hội_Tam_Hoàng],,0000,0000,0000,,{\i1}Tôi đoán chừng cô không ưa lão ngáng cẳng vào vụ này...{\i0}
Dialogue: 0,0:16:57.28,0:17:00.51,[Hội_Tam_Hoàng],,0000,0000,0000,,{\i1}Nên tôi dụ lão đến chỗ không ma nào thèm săn hàng rồi.{\i0}
Dialogue: 0,0:17:00.51,0:17:02.44,[Hội_Tam_Hoàng],,0000,0000,0000,,{\i1}Sau này nhớ bồi thường đầy đủ đó.{\i0}
Dialogue: 0,0:17:02.88,0:17:04.76,[Balalaika],,0000,0000,0000,,Anh thiệt chu toàn quá.
Dialogue: 0,0:17:04.76,0:17:06.54,[Balalaika],,0000,0000,0000,,Nợ anh lần này rồi.
Dialogue: 0,0:17:07.02,0:17:08.76,[Balalaika],,0000,0000,0000,,Mọi thứ vẫn tiến triển thuận lợi, Chang.
Dialogue: 0,0:17:09.15,0:17:11.55,[Balalaika],,0000,0000,0000,,Bước đầu sẽ khởi động bất kì lúc nào.
Dialogue: 0,0:17:23.10,0:17:24.77,[Sub_Phụ],,0000,0000,0000,,Nó đến rồi! Chính là con xe đó!
Dialogue: 0,0:17:25.77,0:17:28.03,[Sub_Phụ],,0000,0000,0000,,Không thể sai được.\NĐúng xe sedan màu đen dòng Nhật Bản!
Dialogue: 0,0:17:28.03,0:17:28.98,[Sub_Phụ],,0000,0000,0000,,Có chúng ở trong không?
Dialogue: 0,0:17:28.98,0:17:31.13,[Sub_Phụ],,0000,0000,0000,,Kính màu thế kia thấy bố gì được!
Dialogue: 0,0:17:31.21,0:17:34.11,[Sub_Phụ],,0000,0000,0000,,Việc đéo gì phải xem? Bùm chết nó đi!
Dialogue: 0,0:17:36.01,0:17:37.81,[Sub_Phụ],,0000,0000,0000,,Đệt! Thằng ngu!
Dialogue: 0,0:17:40.32,0:17:42.29,[Sub_Phụ],,0000,0000,0000,,Đi chết mẹ mày đi!
Dialogue: 0,0:18:14.85,0:18:16.15,[Sub_Phụ],,0000,0000,0000,,Bắt được không?
Dialogue: 0,0:18:19.89,0:18:21.28,[Sub_Phụ],,0000,0000,0000,,Tóc không phải màu bạc!
Dialogue: 0,0:18:21.46,0:18:23.55,[Sub_Phụ],,0000,0000,0000,,Là đứa con nít bản địa! Mẹ nó!
Dialogue: 0,0:18:23.63,0:18:24.57,[Sub_Phụ],,0000,0000,0000,,Nhầm mẹ nó rồi!
Dialogue: 0,0:18:24.57,0:18:25.14,[Sub_Phụ],,0000,0000,0000,,Mẹ nó!
Dialogue: 0,0:18:25.14,0:18:25.71,[Sub_Phụ],,0000,0000,0000,,Đệt!
Dialogue: 0,0:18:25.71,0:18:27.79,[Sub_Phụ],,0000,0000,0000,,Watsap đang hướng về phía nam cảng cá.
Dialogue: 0,0:18:27.87,0:18:28.85,[Sub_Phụ],,0000,0000,0000,,Nó đang ở đó đấy!
Dialogue: 0,0:18:28.85,0:18:29.90,[Sub_Phụ],,0000,0000,0000,,Xách xe đuổi theo!
Dialogue: 0,0:18:29.90,0:18:32.13,[Sub_Phụ],,0000,0000,0000,,Bắt cho bằng được lũ nhóc đó!
Dialogue: 0,0:18:36.11,0:18:38.08,[Assassin],,0000,0000,0000,,Đúng y như dự tính, phải không chị hai?
Dialogue: 0,0:18:38.71,0:18:41.80,[Assassin],,0000,0000,0000,,Lại có người đồng ý giả danh chị với giá 5,000 baht thôi đó? Thật rẻ mạt quá đi.
Dialogue: 0,0:18:42.21,0:18:44.51,[Assassin],,0000,0000,0000,,Mà cũng thiệt tội cho cậu ta hen.
Dialogue: 0,0:18:44.51,0:18:45.94,[Assassin],,0000,0000,0000,,Nghe bảo là trẻ mồ côi đó.
Dialogue: 0,0:18:46.58,0:18:48.44,[Assassin],,0000,0000,0000,,Đành chịu thôi, chị à.
Dialogue: 0,0:18:48.85,0:18:52.76,[Assassin],,0000,0000,0000,,Ở đời nếu không giết họ thì họ sẽ giết mình thôi.
Dialogue: 0,0:18:52.82,0:18:54.46,[Assassin],,0000,0000,0000,,Phải ha, anh hai.
Dialogue: 0,0:18:54.46,0:18:55.69,[Assassin],,0000,0000,0000,,Đành chịu vậy thôi.
Dialogue: 0,0:18:55.76,0:18:57.24,[Assassin],,0000,0000,0000,,Phải đó, chị hai.
Dialogue: 0,0:18:57.24,0:18:58.68,[Assassin],,0000,0000,0000,,Thế nên cứ giết tới thôi.
Dialogue: 0,0:18:58.68,0:18:59.65,[Assassin],,0000,0000,0000,,Càng nhiều càng vui.
Dialogue: 0,0:19:00.20,0:19:01.56,[Sub_Phụ],,0000,0000,0000,,Phát hiện được địch.
Dialogue: 0,0:19:18.95,0:19:21.78,[Sub_Phụ],,0000,0000,0000,,Đội phục sau đường Chalquam đã phát hiện được địch.
Dialogue: 0,0:19:22.23,0:19:23.63,[Sub_Phụ],,0000,0000,0000,,Sẽ tiến hành bắn nghi binh.
Dialogue: 0,0:19:24.02,0:19:24.68,[Balalaika],,0000,0000,0000,,Tốt.
Dialogue: 0,0:19:25.02,0:19:26.97,[Balalaika],,0000,0000,0000,,Vậy chúng hướng theo ngả đường nào?
Dialogue: 0,0:19:26.97,0:19:28.25,[Sub_Phụ],,0000,0000,0000,,Phía Đông, như dự kiến.
Dialogue: 0,0:19:28.83,0:19:30.81,[Sub_Phụ],,0000,0000,0000,,Chúng sẽ tới Ladoga Point ngay thôi ạ.
Dialogue: 0,0:19:50.41,0:19:51.97,[Sub_Phụ],,0000,0000,0000,,{\i1}Mục tiêu vừa rẽ trái.{\i0}
Dialogue: 0,0:19:52.12,0:19:54.20,[Balalaika],,0000,0000,0000,,Chúng đi đúng theo dự tính của chúng ta.
Dialogue: 0,0:19:54.45,0:19:56.66,[Sub_Phụ],,0000,0000,0000,,Ngay khi đội 3 nhả đạn vào chúng...
Dialogue: 0,0:19:56.66,0:20:00.38,[Sub_Phụ],,0000,0000,0000,,Thì chúng đi qua Ladoga Point và hiện\N đang tiến về  Livinsk. Ta sẽ phục sẵn ở đó.
Dialogue: 0,0:20:01.59,0:20:04.27,[Balalaika],,0000,0000,0000,,Cử ngay 1 đội đến đường Hamipon.
Dialogue: 0,0:20:04.27,0:20:04.65,[Sub_Phụ],,0000,0000,0000,,Rõ.
Dialogue: 0,0:20:04.85,0:20:06.63,[Balalaika],,0000,0000,0000,,Đảm bảo chỉ chừa cho chúng 1 đường thoát thôi.
Dialogue: 0,0:20:06.63,0:20:09.40,[Balalaika],,0000,0000,0000,,Bảo các đội hoàn thành nhiệm vụ rút lui ngay lập tức.
Dialogue: 0,0:20:09.40,0:20:11.63,[Balalaika],,0000,0000,0000,,Nhiệm vụ chính của ta là dụ địch vào hang.
Dialogue: 0,0:20:14.74,0:20:16.51,[Balalaika],,0000,0000,0000,,Là đội nào vậy?
Dialogue: 0,0:20:16.51,0:20:18.98,[Sub_Phụ],,0000,0000,0000,,Không có chỉ thị không ai dám manh động đâu ạ.
Dialogue: 0,0:20:19.31,0:20:20.80,[Sub_Phụ],,0000,0000,0000,,Chỉ có thể bọn hunter thôi.
Dialogue: 0,0:20:21.41,0:20:22.91,[Sub_Phụ],,0000,0000,0000,,Các đội, báo cáo mau!
Dialogue: 0,0:20:23.41,0:20:24.85,[Balalaika],,0000,0000,0000,,Xóa xổ mọi tên ngáng đường.
Dialogue: 0,0:20:25.75,0:20:27.04,[Neutralist],,0000,0000,0000,,Chờ coi.
Dialogue: 0,0:20:27.04,0:20:29.31,[Neutralist],,0000,0000,0000,,Đứng yên đó, lũ chíp hôi kia.
Dialogue: 0,0:20:29.85,0:20:33.22,[Neutralist],,0000,0000,0000,,Lang thang ngoài đường lúc đêm hôm thế này là không ngoan đâu đó.
Dialogue: 0,0:20:33.69,0:20:35.53,[Neutralist],,0000,0000,0000,,Càng không nên khi cái thành phố này...
Dialogue: 0,0:20:35.53,0:20:37.39,[Neutralist],,0000,0000,0000,,Đã biến thành cái trại săn đầu người rồi.
Dialogue: 0,0:20:39.06,0:20:41.69,[Neutralist],,0000,0000,0000,,Đáng lẽ 2 đứa phải lo cầu phúc Chúa thường xuyên hơn mới đúng.
Dialogue: 0,0:20:43.63,0:20:43.97,[Assassin],,0000,0000,0000,,Nè!
Dialogue: 0,0:20:43.97,0:20:44.23,[Assassin][00],,0000,0000,0000,,Nè!
Dialogue: 0,0:20:44.23,0:20:44.46,[Assassin],,0000,0000,0000,,Nè!
Dialogue: 0,0:20:44.46,0:20:44.86,[Assassin][00],,0000,0000,0000,,Nè!
Dialogue: 0,0:20:45.87,0:20:47.68,[Assassin],,0000,0000,0000,,Cháu hỏi cô cái này nha?
Dialogue: 0,0:20:48.71,0:20:51.56,[Assassin],,0000,0000,0000,,Vậy giá của đầu hai bọn cháu là bao nhiêu thế?
Dialogue: 0,0:20:52.04,0:20:53.39,[Neutralist],,0000,0000,0000,,80 ngàn.
Dialogue: 0,0:20:53.39,0:20:54.81,[Neutralist],,0000,0000,0000,,Đừng có lại đây!
Dialogue: 0,0:20:54.88,0:20:55.69,[Assassin],,0000,0000,0000,,Ồ.
Dialogue: 0,0:20:55.69,0:20:56.85,[Assassin],,0000,0000,0000,,Ghê gớm vậy sao.
Dialogue: 0,0:20:57.31,0:20:59.48,[Assassin],,0000,0000,0000,,Vậy để cháu cho cô xem cái này.
Dialogue: 0,0:20:59.85,0:21:03.15,[Assassin],,0000,0000,0000,,Đống tiền này cháu lấy ở văn phòng chú Verrocchio đó.
Dialogue: 0,0:21:03.59,0:21:05.72,[Assassin],,0000,0000,0000,,Bọn cháu để hết đây cho cô cũng được...
Dialogue: 0,0:21:05.72,0:21:08.12,[Assassin],,0000,0000,0000,,Ngặt là còn tí việc nữa.
Dialogue: 0,0:21:08.24,0:21:11.16,[Assassin],,0000,0000,0000,,Vậy mong cô nhận 100,000\Nrồi vờ như chưa thấy bọn cháu nhé?
Dialogue: 0,0:21:12.23,0:21:13.70,[Neutralist],,0000,0000,0000,,Tính đùa chị mày đó à.
Dialogue: 0,0:21:13.70,0:21:15.36,[Neutralist],,0000,0000,0000,,Tao không phải dạng đi xót thương con nít đâu.
Dialogue: 0,0:21:15.43,0:21:17.18,[Assassin],,0000,0000,0000,,Vậy 150,000 nhé!?
Dialogue: 0,0:21:18.34,0:21:19.46,[Assassin],,0000,0000,0000,,Sao?
Dialogue: 0,0:21:19.46,0:21:20.09,[Assassin],,0000,0000,0000,,Ơ!
Dialogue: 0,0:21:22.77,0:21:23.97,[Neutralist],,0000,0000,0000,,Thế này thì...
Dialogue: 0,0:21:24.51,0:21:26.31,[Neutralist],,0000,0000,0000,,Tính sao đây, Revy!?
Dialogue: 0,0:21:26.38,0:21:28.62,[Black_Lagoon],,0000,0000,0000,,Còn lừng khừng gì nữa, Eda?
Dialogue: 0,0:21:28.98,0:21:32.01,[Black_Lagoon],,0000,0000,0000,,80 vé, 150 vé, {\i1}cộng{\i0} thêm của tụi nó!
Dialogue: 0,0:21:32.01,0:21:33.96,[Black_Lagoon],,0000,0000,0000,,Cướp sạch không chừa!
Dialogue: 0,0:21:35.62,0:21:37.59,[Sub_Phụ],,0000,0000,0000,,Đã xác định được vị trí của địch.
Dialogue: 0,0:21:37.82,0:21:39.96,[Sub_Phụ],,0000,0000,0000,,Là ả người Tàu ở băng Lagoon...
Dialogue: 0,0:21:39.96,0:21:42.43,[Sub_Phụ],,0000,0000,0000,,Cả bà sơ ở nhà thờ Ripoff Church cũng ở đó.
Dialogue: 0,0:21:42.44,0:21:44.02,[Balalaika],,0000,0000,0000,,Chúng không nằm trong kế hoạch của chúng ta.
Dialogue: 0,0:21:45.13,0:21:47.52,[Balalaika],,0000,0000,0000,,Chúng mà cản đường, xử chúng đi.
