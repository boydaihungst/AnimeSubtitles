Dialogue: 0,0:01:33.59,0:01:35.49,[Balalaika],,0000,0000,0000,,Ông nói con ấy ạ?
Dialogue: 0,0:01:35.79,0:01:36.63,[Balalaika],,0000,0000,0000,,Thi Olympic sao?
Dialogue: 0,0:01:37.62,0:01:41.14,[Sub_Phụ],,0000,0000,0000,,Ờ. Cũng đến lúc con phải đặt mục tiêu cho mình là vừa.
Dialogue: 0,0:01:41.81,0:01:42.83,[Sub_Phụ],,0000,0000,0000,,Con đừng lo lắng quá.
Dialogue: 0,0:01:42.83,0:01:45.00,[Sub_Phụ],,0000,0000,0000,,Con là đứa có tài năng mà.
Dialogue: 0,0:01:45.39,0:01:48.91,[Balalaika],,0000,0000,0000,,Nếu đi thi thì cha con sẽ nở mày nở mặt lắm phải không?
Dialogue: 0,0:01:50.14,0:01:53.70,[Sub_Phụ],,0000,0000,0000,,Là con cháu trong gia đình,\N có thể coi đây là bổn phận của con vậy.
Dialogue: 0,0:01:54.11,0:01:55.49,[Balalaika],,0000,0000,0000,,Nếu thế...
Dialogue: 0,0:01:55.49,0:01:56.26,[Balalaika],,0000,0000,0000,,Một lần nữa...
Dialogue: 0,0:01:57.34,0:01:58.79,[Sub_Phụ],,0000,0000,0000,,Nhưng...
Dialogue: 0,0:01:58.79,0:02:00.46,[Sub_Phụ],,0000,0000,0000,,Trước khi đó thì...
Dialogue: 0,0:02:00.46,0:02:03.58,[Sub_Phụ],,0000,0000,0000,,Con cần truy rèn thêm vài kĩ năng nữa.
Dialogue: 0,0:02:12.00,0:02:12.86,[Sub_Phụ],,0000,0000,0000,,Trung úy?
Dialogue: 0,0:02:12.96,0:02:14.00,[Sub_Phụ][00],,0000,0000,0000,,Trung úy!
Dialogue: 0,0:02:14.26,0:02:15.14,[Balalaika],,0000,0000,0000,,Menshov!
Dialogue: 0,0:02:15.14,0:02:15.75,[Balalaika],,0000,0000,0000,,Đưa Dragunov đây!
Dialogue: 0,0:02:15.88,0:02:16.48,[Sub_Phụ],,0000,0000,0000,,Vâng!
Dialogue: 0,0:02:28.11,0:02:28.97,[Sub_Phụ],,0000,0000,0000,,Quá đỉnh!
Dialogue: 0,0:02:28.97,0:02:30.55,[Sub_Phụ],,0000,0000,0000,,Quả rồi chỉ có huy chương vàng trở lên!
Dialogue: 0,0:02:32.31,0:02:33.95,[Sub_Phụ],,0000,0000,0000,,Mở đường công cho Trung úy!
Dialogue: 0,0:02:34.45,0:02:35.37,[Balalaika],,0000,0000,0000,,Tất cả, nghe đây!
Dialogue: 0,0:02:35.38,0:02:37.80,[Balalaika],,0000,0000,0000,,Nấp sau thùng phi rõ chưa!
Dialogue: 0,0:02:39.15,0:02:39.58,[Balalaika],,0000,0000,0000,,Đi mau!
Dialogue: 0,0:02:48.76,0:02:51.27,[Sub_Phụ][02],,0000,0000,0000,,Về ba ở nội dung bắn súng trường cự ly 50 met nữ.{\i0}
Dialogue: 0,0:02:51.27,0:02:53.73,[Sub_Phụ][02],,0000,0000,0000,,Huy chương vàng được trao cho Launi Meili của đoàn Mĩ!{\I0}
Dialogue: 0,0:02:53.97,0:02:57.00,[Sub_Phụ][02],,0000,0000,0000,,Kì vận hội trước Meili chỉ cán đích ở vị trí thứ 6...{\i0}
Dialogue: 0,0:02:57.20,0:02:59.17,[Balalaika],,0000,0000,0000,,Anh muốn gì ở tôi nữa đây?
Dialogue: 0,0:02:59.34,0:03:00.10,[Sub_Phụ],,0000,0000,0000,,Đội trưởng à.
Dialogue: 0,0:03:01.34,0:03:05.34,[Balalaika],,0000,0000,0000,,Tôi đã bị tịch thu quân hàm rồi,\N nên bỏ cái danh "đội trưởng" đi dùm tôi.
Dialogue: 0,0:03:05.61,0:03:08.37,[Balalaika],,0000,0000,0000,,Mà cậu cũng không còn là thuộc cấp của tôi nữa rồi.
Dialogue: 0,0:03:09.35,0:03:12.41,[Balalaika],,0000,0000,0000,,Cái đất nước mà ta bán mạng cho - Liên minh Soviet ấy...
Dialogue: 0,0:03:13.10,0:03:15.16,[Balalaika],,0000,0000,0000,,Đã hoàn toàn bị xóa xổ rồi.
Dialogue: 0,0:03:16.25,0:03:17.75,[Sub_Phụ],,0000,0000,0000,,Dù chiến trường có ở đâu chăng nữa...
Dialogue: 0,0:03:18.22,0:03:20.71,[Sub_Phụ],,0000,0000,0000,,Chỉ cần vẫn có chị là chỉ huy hy vọng sẽ bao giờ tắt.
Dialogue: 0,0:03:20.71,0:03:22.45,[Sub_Phụ],,0000,0000,0000,,Đó niềm tin của chúng tôi.
Dialogue: 0,0:03:23.96,0:03:25.89,[Balalaika],,0000,0000,0000,,Bất chấp phải sống trong bần hàn đi chăng nữa.
Dialogue: 0,0:03:27.93,0:03:30.32,[Balalaika],,0000,0000,0000,,Tôi không bao giờ ngờ được người đội phó của mình...
Dialogue: 0,0:03:30.32,0:03:32.35,[Balalaika],,0000,0000,0000,,Lại mất mạng chỉ vì...
Dialogue: 0,0:03:32.35,0:03:35.06,[Balalaika],,0000,0000,0000,,Những đồng tiền bẩn thỉu.
Dialogue: 0,0:03:53.16,0:03:54.29,[Balalaika],,0000,0000,0000,,Các đồng chí!
Dialogue: 0,0:03:54.29,0:03:55.23,[Balalaika],,0000,0000,0000,,Mạnh mẽ lên nào!
Dialogue: 0,0:03:56.43,0:03:57.43,[Balalaika],,0000,0000,0000,,Bắt đầu từ lúc này...
Dialogue: 0,0:03:57.43,0:04:00.21,[Balalaika],,0000,0000,0000,,Trung đội chúng ta chính thức tái nhập ngũ!
Dialogue: 0,0:04:06.30,0:04:08.81,[Balalaika],,0000,0000,0000,,Tính từ hôm ở nghĩa trang ấy...
Dialogue: 0,0:04:08.81,0:04:11.06,[Balalaika],,0000,0000,0000,,Không biết ta đã xông pha biết bao mặt trận rồi.
Dialogue: 0,0:04:11.54,0:04:12.51,[Sub_Phụ],,0000,0000,0000,,Vâng.
Dialogue: 0,0:04:12.51,0:04:14.65,[Balalaika],,0000,0000,0000,,Vụ việc bây giờ cũng chỉ là điểm lưu nhỏ thôi.
Dialogue: 0,0:04:15.88,0:04:18.18,[Balalaika],,0000,0000,0000,,Xử lí vụ này càng chóng càng tốt.
Dialogue: 0,0:04:19.12,0:04:21.94,[Sub_Phụ],,0000,0000,0000,,Đầu lĩnh băng Washimine kế sau Bando là cô gái này.
Dialogue: 0,0:04:23.59,0:04:25.22,[Balalaika],,0000,0000,0000,,Chỉ là một con nhóc thôi à.
Dialogue: 0,0:04:27.68,0:04:30.40,[Sub_Phụ],,0000,0000,0000,,Về mùa này mặt trời lặn sớm quá chị ha?
Dialogue: 0,0:04:30.59,0:04:32.52,[Sub_Phụ],,0000,0000,0000,,Mà nè senpai, hôm nay chị sao thế?
Dialogue: 0,0:04:32.52,0:04:35.97,[Sub_Phụ],,0000,0000,0000,,Không dưng lại sắp xếp hết thẻ thư viện trọn nguyên ngày.
Dialogue: 0,0:04:36.47,0:04:38.44,[Sub_Phụ],,0000,0000,0000,,Xong thì tốt thật đấy, nhưng mà...
Dialogue: 0,0:04:41.67,0:04:43.64,[Sub_Phụ],,0000,0000,0000,,Tuyết đã rơi rồi chị này!
Dialogue: 0,0:04:45.21,0:04:46.31,[Sub_Phụ],,0000,0000,0000,,Thật đẹp làm sao.
Dialogue: 0,0:04:46.98,0:04:47.73,[Sub_Phụ],,0000,0000,0000,,Ế?
Dialogue: 0,0:04:47.73,0:04:48.93,[Sub_Phụ],,0000,0000,0000,,Nhưng senpai...
Dialogue: 0,0:04:48.93,0:04:51.44,[Sub_Phụ],,0000,0000,0000,,Chị vẫn nói mình rất ghét những đêm tuyết đổ mà?
Dialogue: 0,0:04:51.95,0:04:52.90,[Sub_Phụ],,0000,0000,0000,,Maki-chan.
Dialogue: 0,0:04:55.35,0:04:57.20,[Sub_Phụ],,0000,0000,0000,,Phải làm thân lại với mẹ em đó.
Dialogue: 0,0:04:57.70,0:04:59.46,[Sub_Phụ],,0000,0000,0000,,Em là cô bé ngoan mà.
Dialogue: 0,0:04:59.58,0:05:00.94,[Sub_Phụ],,0000,0000,0000,,S-Senpai?
Dialogue: 0,0:05:02.03,0:05:06.19,[Sub_Phụ],,0000,0000,0000,,Thôi đi mà, senpai. Chị cứ làm như chị sắp từ trần đến nơi vậy.
Dialogue: 0,0:05:17.64,0:05:18.91,[Sub_Phụ],,0000,0000,0000,,Senpai!
Dialogue: 0,0:05:34.19,0:05:35.21,[Sub_Phụ],,0000,0000,0000,,Đà chủ!
Dialogue: 0,0:05:35.76,0:05:36.68,[Sub_Phụ],,0000,0000,0000,,Cô về ạ.
Dialogue: 0,0:05:37.21,0:05:38.24,[Sub_Phụ],,0000,0000,0000,,Đã phiền anh rồi.
Dialogue: 0,0:05:39.26,0:05:40.89,[Sub_Phụ],,0000,0000,0000,,Vậy ta đi chứ nhỉ.
Dialogue: 0,0:05:41.90,0:05:43.19,[Sub_Phụ],,0000,0000,0000,,Senpai.
Dialogue: 0,0:05:45.24,0:05:46.23,[Sub_Phụ],,0000,0000,0000,,Em...
Dialogue: 0,0:05:46.23,0:05:47.20,[Sub_Phụ],,0000,0000,0000,,Ơ...
Dialogue: 0,0:05:49.44,0:05:50.74,[Sub_Phụ],,0000,0000,0000,,Hãy giữ mình em nhé.
Dialogue: 0,0:05:51.21,0:05:52.57,[Sub_Phụ],,0000,0000,0000,,E-E-E-Em...
Dialogue: 0,0:05:52.57,0:05:54.06,[Sub_Phụ],,0000,0000,0000,,Chẳng hiểu cái gì cả.
Dialogue: 0,0:05:54.06,0:05:54.99,[Sub_Phụ],,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:05:55.51,0:05:56.93,[Sub_Phụ],,0000,0000,0000,,Senpai.
Dialogue: 0,0:05:58.42,0:05:59.53,[Sub_Phụ],,0000,0000,0000,,Senpai!
Dialogue: 0,0:06:03.99,0:06:05.46,[Sub_Phụ],,0000,0000,0000,,Senpai.
Dialogue: 0,0:06:07.66,0:06:10.02,[Sub_Phụ],,0000,0000,0000,,Đã biết được chỗ ở của Balalaika chưa?
Dialogue: 0,0:06:10.16,0:06:11.47,[Sub_Phụ],,0000,0000,0000,,Vẫn chưa ạ.
Dialogue: 0,0:06:11.47,0:06:14.91,[Sub_Phụ],,0000,0000,0000,,Việc truy tìm căn cứ của bọn chúng hiện vẫn đang rất bế tắc.
Dialogue: 0,0:06:15.12,0:06:17.26,[Sub_Phụ],,0000,0000,0000,,Đã cho đàn em tỏa đi lùng sục khắp nơi.
Dialogue: 0,0:06:17.26,0:06:20.43,[Sub_Phụ],,0000,0000,0000,,Nhưng chẳng mấy chốc cũng sẽ có kẻ phát\N giác ra mấy tên Nga bựa lảng vảng thôi.
Dialogue: 0,0:06:20.67,0:06:22.74,[Sub_Phụ],,0000,0000,0000,,Cử người đến Azabu ngay cho tôi.
Dialogue: 0,0:06:23.31,0:06:24.73,[Sub_Phụ],,0000,0000,0000,,Cả đại sứ quán Nga...
Dialogue: 0,0:06:24.73,0:06:26.78,[Sub_Phụ],,0000,0000,0000,,Với những nơi chúng thường lui tới nữa.
Dialogue: 0,0:06:26.91,0:06:29.98,[Sub_Phụ],,0000,0000,0000,,Đã cài một nhóm người chính phủ làm tay trong cho ta rồi ạ.
Dialogue: 0,0:06:30.25,0:06:31.95,[Sub_Phụ],,0000,0000,0000,,Họ sẽ điều tra hộ chúng ta.
Dialogue: 0,0:06:32.85,0:06:36.39,[Sub_Phụ],,0000,0000,0000,,Vậy có cần cử mấy đứa đến sân bay\N Narita với Haneda không, thưa Đà chủ?
Dialogue: 0,0:06:37.69,0:06:40.19,[Sub_Phụ],,0000,0000,0000,,Chắc chắn chúng sẽ tận dụng lúc ta \Ncòn lưỡng lự để mở tấn công úp mặt.
Dialogue: 0,0:06:40.65,0:06:43.08,[Sub_Phụ],,0000,0000,0000,,Không có chuyện chúng sẽ bỏ cuộc chơi đâu.
Dialogue: 0,0:06:43.76,0:06:45.15,[Sub_Phụ],,0000,0000,0000,,Tấn công...
Dialogue: 0,0:06:45.15,0:06:45.85,[Sub_Phụ],,0000,0000,0000,,Mới là kiểu của bà ta.
Dialogue: 0,0:06:53.24,0:06:54.71,[Sub_Phụ],,0000,0000,0000,,Đà chủ...
Dialogue: 0,0:06:54.71,0:06:56.43,[Sub_Phụ],,0000,0000,0000,,Có cần tôi dừng ở đâu không ạ?
Dialogue: 0,0:06:56.78,0:06:57.62,[Sub_Phụ],,0000,0000,0000,,Không...
Dialogue: 0,0:06:57.62,0:06:59.17,[Sub_Phụ],,0000,0000,0000,,Không cần đâu.
Dialogue: 0,0:06:59.17,0:07:00.76,[Sub_Phụ],,0000,0000,0000,,Tôi cũng quen dần với việc này rồi.
Dialogue: 0,0:07:01.41,0:07:02.42,[Sub_Phụ],,0000,0000,0000,,Yoshida-san.
Dialogue: 0,0:07:02.42,0:07:03.38,[Sub_Phụ],,0000,0000,0000,,V-Vâng?
Dialogue: 0,0:07:03.45,0:07:05.96,[Sub_Phụ],,0000,0000,0000,,Tôi vẫn chưa kịp cảm tạ anh...
Dialogue: 0,0:07:05.96,0:07:08.73,[Sub_Phụ],,0000,0000,0000,,Đã nói đỡ trong cuộc họp lần trước.
Dialogue: 0,0:07:08.92,0:07:10.78,[Sub_Phụ],,0000,0000,0000,,Đà chủ! Đâu cần phải thế!
Dialogue: 0,0:07:10.86,0:07:11.74,[Sub_Phụ],,0000,0000,0000,,Ngày hôm đó...
Dialogue: 0,0:07:23.67,0:07:25.45,[Sub_Phụ],,0000,0000,0000,,Chịu đựng thế là đủ lắm rồi!
Dialogue: 0,0:07:25.45,0:07:28.47,[Sub_Phụ],,0000,0000,0000,,Đã có Tiểu thư ở đây thì lũ Kousa chó chết kia...
Dialogue: 0,0:07:28.47,0:07:30.63,[Sub_Phụ],,0000,0000,0000,,Đừng hòng lấy cớ mà...
Dialogue: 0,0:07:30.63,0:07:32.89,[Sub_Phụ],,0000,0000,0000,,O ép chúng ta thêm một ngày nào nữa!
Dialogue: 0,0:07:33.24,0:07:36.10,[Sub_Phụ],,0000,0000,0000,,Tiểu thư đã đặt cược tính mạng mình vào cuộc chơi này!
Dialogue: 0,0:07:36.61,0:07:38.71,[Sub_Phụ],,0000,0000,0000,,Tinh thần trượng nghĩa anh em nung nấy bấy lâu...
Dialogue: 0,0:07:38.71,0:07:40.51,[Sub_Phụ],,0000,0000,0000,,Đã đến lúc đem ra dùng rồi!
Dialogue: 0,0:07:41.45,0:07:43.35,[Sub_Phụ],,0000,0000,0000,,Từ đầu cô đã không dính dáng gì đến chuyện này rồi, tiểu thư à...
Dialogue: 0,0:07:43.35,0:07:46.30,[Sub_Phụ],,0000,0000,0000,,Thế mà cô vẫn ra mặt kêu gọi báo thù cho đại ca.
Dialogue: 0,0:07:46.83,0:07:50.78,[Sub_Phụ],,0000,0000,0000,,Nội điều đó thôi cũng đủ để lũ \Nyakuza bọn tôi toàn tâm theo tiểu thư rồi.
Dialogue: 0,0:07:56.03,0:07:57.19,[Sub_Phụ],,0000,0000,0000,,Vậy thưa Đầu lĩnh...
Dialogue: 0,0:07:57.19,0:07:59.51,[Sub_Phụ],,0000,0000,0000,,Tôi xin mạn phép đi ạ.
Dialogue: 0,0:07:59.70,0:08:01.21,[Sub_Phụ],,0000,0000,0000,,Cô cứ về nhà trước đợi tin.
Dialogue: 0,0:08:02.76,0:08:04.29,[Sub_Phụ],,0000,0000,0000,,Gin-san!
Dialogue: 0,0:08:04.68,0:08:05.97,[Sub_Phụ],,0000,0000,0000,,Nhiệm vụ đầu tiên đấy.
Dialogue: 0,0:08:05.97,0:08:07.79,[Sub_Phụ],,0000,0000,0000,,Anh nhớ bảo trọng thân mình.
Dialogue: 0,0:08:09.01,0:08:10.80,[Sub_Phụ],,0000,0000,0000,,Xin cứ tin ở tôi ạ.
Dialogue: 0,0:08:16.52,0:08:17.65,[Sub_Phụ],,0000,0000,0000,,Không ai trả lời, Sếp à.
Dialogue: 0,0:08:17.81,0:08:20.59,[Sub_Phụ],,0000,0000,0000,,Balalaika với mấy lão còn lại đều không liên lạc được.
Dialogue: 0,0:08:20.76,0:08:23.64,[Sub_Phụ],,0000,0000,0000,,Gọi thêm lần nữa. Gọi đến lúc nào có đứa bắt máy thì thôi, Makaruska.
Dialogue: 0,0:08:24.06,0:08:26.72,[Sub_Phụ],,0000,0000,0000,,Hiện vẫn chưa biết họ đã đi đâu sau khi rời khách sạn.
Dialogue: 0,0:08:26.90,0:08:29.08,[Sub_Phụ],,0000,0000,0000,,Có khi ta nên gọi thẳng về Moscow hỏi thử xem.
Dialogue: 0,0:08:30.70,0:08:33.09,[Sub_Phụ],,0000,0000,0000,,Đừng có dạy đời tao là phải đi \Nhỏi thằng nào con nào ở đây hết!
Dialogue: 0,0:08:33.37,0:08:35.47,[Sub_Phụ],,0000,0000,0000,,Tao bảo gọi lại là phải gọi lại!
Dialogue: 0,0:08:35.74,0:08:37.75,[Sub_Phụ],,0000,0000,0000,,Mẹ, mẹ, mẹ nó!
Dialogue: 0,0:08:37.80,0:08:39.89,[Sub_Phụ],,0000,0000,0000,,Chắc chắn con già đó chơi tao đây mà.
Dialogue: 0,0:08:39.89,0:08:42.61,[Sub_Phụ],,0000,0000,0000,,Nếu không thì không thể nào có chuyện Slevnin lật lọng thế được!
Dialogue: 0,0:08:42.67,0:08:44.50,[Sub_Phụ],,0000,0000,0000,,Nhưng mụ ta lại nhắm vào ta chứ?
Dialogue: 0,0:08:44.88,0:08:46.76,[Sub_Phụ],,0000,0000,0000,,Không phải do chúng mày, mà là tao kìa!
Dialogue: 0,0:08:46.76,0:08:48.38,[Sub_Phụ],,0000,0000,0000,,Con mụ căm KGB!
Dialogue: 0,0:08:48.69,0:08:49.98,[Sub_Phụ],,0000,0000,0000,,Không chỉ mỗi KGB...
Dialogue: 0,0:08:49.98,0:08:52.09,[Sub_Phụ],,0000,0000,0000,,Mà cả GRU với Nomenklatura cũng thế nữa!
Dialogue: 0,0:08:52.45,0:08:55.73,[Sub_Phụ],,0000,0000,0000,,Con mụ đó mà đã ghét ai thì thằng đó chỉ có chết!
Dialogue: 0,0:08:55.83,0:08:57.74,[Sub_Phụ],,0000,0000,0000,,Thế Slevnin có nói gì về mụ ta không ạ?
Dialogue: 0,0:08:59.13,0:09:00.05,[Sub_Phụ],,0000,0000,0000,,Nằm xuống!
Dialogue: 0,0:09:06.57,0:09:08.18,[Sub_Phụ],,0000,0000,0000,,Là bọn yakuza!
Dialogue: 0,0:09:15.58,0:09:16.69,[Sub_Phụ],,0000,0000,0000,,Hết rồi sao?
Dialogue: 0,0:09:24.16,0:09:26.75,[Sub_Phụ],,0000,0000,0000,,Đã đến màn của Souga Sukeroku rồi.
Dialogue: 0,0:09:27.29,0:09:28.07,[Sub_Phụ],,0000,0000,0000,,Nào nào...
Dialogue: 0,0:09:28.59,0:09:31.05,[Sub_Phụ],,0000,0000,0000,,Hige no Ikyu ở đâu ra đây nào?
Dialogue: 0,0:09:32.93,0:09:34.98,[Sub_Phụ],,0000,0000,0000,,Có mỗi thanh sắt gỉ đó mà đòi hù tao à!
Dialogue: 0,0:09:34.98,0:09:35.59,[Sub_Phụ],,0000,0000,0000,,Phơ nó!
Dialogue: 0,0:09:54.86,0:09:55.86,[Sub_Phụ],,0000,0000,0000,,Bác già à.
Dialogue: 0,0:09:56.30,0:09:57.58,[Sub_Phụ],,0000,0000,0000,,Tính lẩn đi đâu đó?
Dialogue: 0,0:09:58.69,0:09:59.61,[Sub_Phụ],,0000,0000,0000,,Từ từ...
Dialogue: 0,0:09:59.61,0:10:01.59,[Sub_Phụ],,0000,0000,0000,,Ở lại cho tôi hỏi han vài thứ đã chứ.
Dialogue: 0,0:10:02.26,0:10:05.03,[Sub_Phụ],,0000,0000,0000,,Đầu tiên, mau phun ra số điện thoại mụ sếp của bác mau.
Dialogue: 0,0:10:05.98,0:10:07.02,[Sub_Phụ],,0000,0000,0000,,{\i1}Chờ chút đã!
Dialogue: 0,0:10:07.02,0:10:08.05,[Sub_Phụ],,0000,0000,0000,,{\i1}Xin đừng giết tôi!{\i0}
Dialogue: 0,0:10:08.05,0:10:09.05,[Sub_Phụ],,0000,0000,0000,,Ô...
Dialogue: 0,0:10:09.05,0:10:10.88,[Sub_Phụ],,0000,0000,0000,,Không biết tiếng Nhật à.
Dialogue: 0,0:10:08.05,0:10:11.26,[Sub_Phụ],,0000,0000,0000,,{\i1}Là tôi bị lừa, sư nó, hạ kiếm xuống đi!{\i0}
Dialogue: 0,0:10:11.34,0:10:12.38,[Sub_Phụ],,0000,0000,0000,,Đành vậy.
Dialogue: 0,0:10:12.67,0:10:14.25,[Sub_Phụ],,0000,0000,0000,,Thế thì, giữ ông bác lại cũng vô dụng thôi.
Dialogue: 0,0:10:16.71,0:10:19.05,[Sub_Phụ],,0000,0000,0000,,Về nhắc mấy bố Ivan tăng thêm đây ít "máu" nhé.
Dialogue: 0,0:10:19.48,0:10:21.45,[Sub_Phụ],,0000,0000,0000,,Mấy lão sếp cằn nhằn nghe mà mệt óc.
Dialogue: 0,0:10:21.65,0:10:23.65,[Sub_Phụ],,0000,0000,0000,,Sau rồi bọn này kiếm cách đền đủ cho.
Dialogue: 0,0:10:24.02,0:10:25.66,[Black_Lagoon],,0000,0000,0000,,Tự mà đi bảo nhá, Bro.
Dialogue: 0,0:10:28.02,0:10:29.34,[Black_Lagoon],,0000,0000,0000,,Có chờ lâu không thế, Rock.
Dialogue: 0,0:10:29.34,0:10:30.45,[Black_Lagoon],,0000,0000,0000,,Chị hai đó nổi đóa lên là phiền.
Dialogue: 0,0:10:30.45,0:10:31.82,[Black_Lagoon],,0000,0000,0000,,Thôi, lượn mau thôi.
Dialogue: 0,0:10:32.68,0:10:34.79,[Black_Lagoon],,0000,0000,0000,,Cuối cùng cũng thoát đưọc cục nợ Tokarev này.
Dialogue: 0,0:10:35.49,0:10:37.19,[Black_Lagoon],,0000,0000,0000,,Thiếu hai bé này thì chẳng làm ăn được gì.
Dialogue: 0,0:10:38.80,0:10:39.43,[Black_Lagoon],,0000,0000,0000,,Sao thế?
Dialogue: 0,0:10:39.80,0:10:40.70,[Black_Lagoon],,0000,0000,0000,,Đã bắt đầu rồi.
Dialogue: 0,0:10:41.03,0:10:42.10,[Black_Lagoon],,0000,0000,0000,,À...
Dialogue: 0,0:10:42.10,0:10:43.40,[Black_Lagoon],,0000,0000,0000,,Cuộc chiến hả.
Dialogue: 0,0:10:43.78,0:10:45.82,[Black_Lagoon],,0000,0000,0000,,Chắc chị hai kia đang cười hả hê lắm đó.
Dialogue: 0,0:10:47.47,0:10:49.38,[Black_Lagoon],,0000,0000,0000,,Đập phá rùm beng lên không khoái mới lạ.
Dialogue: 0,0:10:49.38,0:10:50.17,[Black_Lagoon],,0000,0000,0000,,Cô gái đó...
Dialogue: 0,0:10:51.71,0:10:52.45,[Black_Lagoon],,0000,0000,0000,,Revy...
Dialogue: 0,0:10:52.45,0:10:53.69,[Black_Lagoon],,0000,0000,0000,,Không thể mặc cô ấy được...
Dialogue: 0,0:10:53.69,0:10:55.36,[Black_Lagoon],,0000,0000,0000,,Đi với tôi tới chỗ cô ấy chứ?
Dialogue: 0,0:10:56.61,0:10:58.09,[Black_Lagoon],,0000,0000,0000,,Hâm vừa vừa thôi...
Dialogue: 0,0:10:58.09,0:11:01.03,[Black_Lagoon],,0000,0000,0000,,Nghĩ lại xem ta là thứ gì với chúng nào.
Dialogue: 0,0:11:01.45,0:11:03.87,[Black_Lagoon],,0000,0000,0000,,Lúc này, ta đã là kẻ thù của cô ta rồi.
Dialogue: 0,0:11:03.95,0:11:05.25,[Black_Lagoon],,0000,0000,0000,,Xin cô mà, Revy!
Dialogue: 0,0:11:05.25,0:11:07.14,[Black_Lagoon],,0000,0000,0000,,Nếu cô ấy lún sâu quá vào băng Washimine...
Dialogue: 0,0:11:07.14,0:11:09.18,[Black_Lagoon],,0000,0000,0000,,Thì chắc chắn cô ấy sẽ vĩnh viễn không có đường sống đâu!
Dialogue: 0,0:11:09.46,0:11:11.56,[Black_Lagoon],,0000,0000,0000,,Giờ khi thấy phương cách hành động của bà Balalaika...
Dialogue: 0,0:11:11.56,0:11:12.76,[Black_Lagoon],,0000,0000,0000,,Tôi còn đoan chắc điều đó hơn!
Dialogue: 0,0:11:13.36,0:11:14.85,[Black_Lagoon],,0000,0000,0000,,Cô bé đó khác với chúng ta!
Dialogue: 0,0:11:14.93,0:11:15.46,[Black_Lagoon],,0000,0000,0000,,Rock.
Dialogue: 0,0:11:15.30,0:11:16.33,[Black_Lagoon],,0000,0000,0000,,Chỉ là 1 cô bé bình thường mà thôi!
Dialogue: 0,0:11:16.33,0:11:16.90,[Black_Lagoon],,0000,0000,0000,,Rock!
Dialogue: 0,0:11:17.27,0:11:19.45,[Black_Lagoon],,0000,0000,0000,,Ta đâu còn ở Roanapur nữa đâu!
Dialogue: 0,0:11:19.45,0:11:20.65,[Black_Lagoon],,0000,0000,0000,,Thế khác chỗ nào hả?
Dialogue: 0,0:11:21.12,0:11:22.90,[Black_Lagoon],,0000,0000,0000,,Bộ anh nghĩ khác nhau lắm sao, Rock?
Dialogue: 0,0:11:24.11,0:11:26.30,[Black_Lagoon],,0000,0000,0000,,Bản thân cuộc đời cô ả đã như thế rồi...
Dialogue: 0,0:11:26.58,0:11:29.96,[Black_Lagoon],,0000,0000,0000,,Còn Bà chị thì quy hết theo luật ở Roanapur.
Dialogue: 0,0:11:30.32,0:11:31.85,[Black_Lagoon],,0000,0000,0000,,Chẳng có gì khác ở đây cả.
Dialogue: 0,0:11:33.92,0:11:35.51,[Black_Lagoon],,0000,0000,0000,,Nhưng mà, tôi vẫn...
Dialogue: 0,0:11:35.59,0:11:36.96,[Black_Lagoon],,0000,0000,0000,,Thôi đi nào, Rock.
Dialogue: 0,0:11:37.36,0:11:39.27,[Black_Lagoon],,0000,0000,0000,,Chỗ của ta là đường phân lập...
Dialogue: 0,0:11:39.27,0:11:40.56,[Black_Lagoon],,0000,0000,0000,,Chỉ cần anh nhích rời một chút...
Dialogue: 0,0:11:40.56,0:11:42.30,[Black_Lagoon],,0000,0000,0000,,Sẽ không còn đường thối lui đâu.
Dialogue: 0,0:11:42.83,0:11:46.54,[Black_Lagoon],,0000,0000,0000,,Vé Ameri-Pass đã bán hết rồi thành ra \Nchuyến Greyhound sẽ không quay lại nữa đâu.
Dialogue: 0,0:11:47.47,0:11:49.13,[Black_Lagoon],,0000,0000,0000,,Ý tôi muốn nói là...
Dialogue: 0,0:11:49.13,0:11:51.06,[Black_Lagoon],,0000,0000,0000,,Đây là quê nhà của anh.
Dialogue: 0,0:11:51.44,0:11:52.43,[Black_Lagoon],,0000,0000,0000,,Nói thế...
Dialogue: 0,0:11:52.43,0:11:53.92,[Black_Lagoon],,0000,0000,0000,,Chắc anh hiểu rồi chứ nhỉ?
Dialogue: 0,0:11:55.57,0:11:56.84,[Black_Lagoon],,0000,0000,0000,,Tôi hiểu chứ...
Dialogue: 0,0:11:56.83,0:11:57.54,[Black_Lagoon],,0000,0000,0000,,Có điều...
Dialogue: 0,0:12:03.55,0:12:04.95,[Black_Lagoon],,0000,0000,0000,,Được rồi....
Dialogue: 0,0:12:04.95,0:12:07.34,[Black_Lagoon],,0000,0000,0000,,Xin lỗi. Quên chuyện hồi nãy đi, Rock.
Dialogue: 0,0:12:08.42,0:12:10.45,[Black_Lagoon],,0000,0000,0000,,Cái quan trọng nhất tôi lại quên mất.
Dialogue: 0,0:12:10.45,0:12:12.19,[Black_Lagoon],,0000,0000,0000,,Tôi là cây súng của anh cơ mà.
Dialogue: 0,0:12:12.82,0:12:15.72,[Black_Lagoon],,0000,0000,0000,,Nhiệm vụ chính của tôi là bảo vệ anh...
Dialogue: 0,0:12:15.72,0:12:18.42,[Black_Lagoon],,0000,0000,0000,,Chứ ai lại ý kiến ý cò vớ vẩn thế chứ.
Dialogue: 0,0:12:19.06,0:12:20.47,[Black_Lagoon],,0000,0000,0000,,Phận bề tôi phải theo chủ thôi...
Dialogue: 0,0:12:20.47,0:12:21.11,[Black_Lagoon],,0000,0000,0000,,Master.
Dialogue: 0,0:12:30.72,0:12:32.39,[Sub_Phụ],,0000,0000,0000,,Ờ, vậy là...
Dialogue: 0,0:12:32.51,0:12:36.17,[Sub_Phụ],,0000,0000,0000,,Ngoại trừ Lãnh sự quán Nga ra thì các \Ncuộc gọi đến khác đều phải ngắt phải không ạ.
Dialogue: 0,0:12:36.32,0:12:37.56,[Sub_Phụ],,0000,0000,0000,,Đúng thế không ạ?
Dialogue: 0,0:12:37.56,0:12:39.13,[Sub_Phụ],,0000,0000,0000,,Thưa, Miss Vladilena?
Dialogue: 0,0:12:39.27,0:12:39.88,[Balalaika],,0000,0000,0000,,Đúng.
Dialogue: 0,0:12:39.88,0:12:40.90,[Balalaika],,0000,0000,0000,,Cảm ơn cậu nhiều nhé.
Dialogue: 0,0:12:40.94,0:12:43.54,[Sub_Phụ],,0000,0000,0000,,Nếu bà còn cần gì khác,\Nxin cứ gọi đích danh cháu nhé.
Dialogue: 0,0:12:44.14,0:12:46.57,[Balalaika],,0000,0000,0000,,Con cái nhà ai trơ trẽn đến là sợ.
Dialogue: 0,0:12:47.38,0:12:48.25,[Balalaika],,0000,0000,0000,,Này, Trung sĩ.
Dialogue: 0,0:12:48.61,0:12:49.32,[Sub_Phụ],,0000,0000,0000,,Vâng, đội trưởng.
Dialogue: 0,0:12:49.62,0:12:50.97,[Sub_Phụ],,0000,0000,0000,,Vừa nhận tin báo từ tổ trinh sát.
Dialogue: 0,0:12:51.10,0:12:53.54,[Sub_Phụ],,0000,0000,0000,,Attack Point Two đã chuyển sang vàng.
Dialogue: 0,0:12:54.01,0:12:56.62,[Sub_Phụ],,0000,0000,0000,,Hàng rào an ninh quanh trụ sở băng Kousa đã được thắt chặt.
Dialogue: 0,0:12:57.22,0:12:59.04,[Sub_Phụ],,0000,0000,0000,,Cớm ở xứ này cũng lành nghề phếc.
Dialogue: 0,0:12:59.74,0:13:02.35,[Balalaika],,0000,0000,0000,,Cớm không ăn đút lót thì lúc nào chẳng thạo nghề.
Dialogue: 0,0:13:02.86,0:13:04.87,[Balalaika],,0000,0000,0000,,Vấn đề chuyên môn ấy mà, Trung sĩ.
Dialogue: 0,0:13:04.88,0:13:05.81,[Balalaika],,0000,0000,0000,,Cậu đã xem tin hôm nay chưa?
Dialogue: 0,0:13:05.95,0:13:06.61,[Sub_Phụ],,0000,0000,0000,,Vâng.
Dialogue: 0,0:13:06.97,0:13:09.26,[Sub_Phụ],,0000,0000,0000,,Ông bạn Laptev đã hoàn thành xuất sắc nhiệm vụ.
Dialogue: 0,0:13:09.93,0:13:11.04,[Balalaika],,0000,0000,0000,,Đúng thế đấy.
Dialogue: 0,0:13:11.04,0:13:14.81,[Balalaika],,0000,0000,0000,,Hồi còn ở KGB lão là dân trinh sát xịn đấy.
Dialogue: 0,0:13:15.59,0:13:18.39,[Balalaika],,0000,0000,0000,,Kẻ thay lão ở địa phận Tokyo sẽ là Bulgaziviry "thầy tu".
Dialogue: 0,0:13:18.84,0:13:20.88,[Balalaika],,0000,0000,0000,,Lão này thì chỉ là dân bàn giấy thôi.
Dialogue: 0,0:13:21.84,0:13:24.41,[Balalaika],,0000,0000,0000,,Quân lực là trong tay ta.
Dialogue: 0,0:13:24.77,0:13:26.46,[Balalaika],,0000,0000,0000,,Đến lúc khởi động kế hoach rồi đấy.
Dialogue: 0,0:13:28.82,0:13:30.91,[Sub_Phụ],,0000,0000,0000,,Đều nhờ cô cả đấy, tiểu thư.
Dialogue: 0,0:13:30.91,0:13:34.08,[Sub_Phụ],,0000,0000,0000,,Thằng đàn em sẽ chạy qua tổng hội báo tin ngay thôi.
Dialogue: 0,0:13:34.32,0:13:35.11,[Sub_Phụ],,0000,0000,0000,,Ờ...
Dialogue: 0,0:13:35.73,0:13:37.30,[Sub_Phụ],,0000,0000,0000,,Yoshida-san thật cảm ơn anh nhiều lắm.
Dialogue: 0,0:13:37.78,0:13:38.79,[Sub_Phụ],,0000,0000,0000,,Dạ thưa...
Dialogue: 0,0:13:38.79,0:13:39.80,[Sub_Phụ],,0000,0000,0000,,Tiểu thư...
Dialogue: 0,0:13:40.23,0:13:42.82,[Sub_Phụ],,0000,0000,0000,,Về chuyện lúc ở trường thật có lỗi quá.
Dialogue: 0,0:13:42.82,0:13:45.86,[Sub_Phụ],,0000,0000,0000,,Biết là sẽ phiền phức cho cô lắm, nhưng mà...
Dialogue: 0,0:13:45.86,0:13:46.80,[Sub_Phụ],,0000,0000,0000,,Tôi hiểu mà.
Dialogue: 0,0:13:47.40,0:13:50.48,[Sub_Phụ],,0000,0000,0000,,Dù sao đằng nào tôi cũng phải giải thích cho em ấy hiểu mà.
Dialogue: 0,0:13:51.00,0:13:54.04,[Sub_Phụ],,0000,0000,0000,,Nghĩ lại thì, lúc nãy là lúc thích hợp hơn cả.
Dialogue: 0,0:13:54.55,0:13:55.51,[Sub_Phụ],,0000,0000,0000,,Cảm ơn anh...
Dialogue: 0,0:13:55.51,0:13:56.16,[Sub_Phụ],,0000,0000,0000,,Yoshida-san.
Dialogue: 0,0:13:56.43,0:13:59.38,[Sub_Phụ],,0000,0000,0000,,Cô tử tế với tôi quá à! Dạ...
Dialogue: 0,0:13:59.37,0:14:01.61,[Sub_Phụ],,0000,0000,0000,,Tối nay trời lạnh quá ha, ta mau vào thôi.
Dialogue: 0,0:14:03.48,0:14:05.45,[Sub_Phụ],,0000,0000,0000,,Ế? Ông anh về sớm hơn tôi tưởng đó!
Dialogue: 0,0:14:05.45,0:14:09.10,[Sub_Phụ],,0000,0000,0000,,Thế mà tôi nghĩ phải chờ lâu nữa cơ!
Dialogue: 0,0:14:09.30,0:14:10.10,[Sub_Phụ],,0000,0000,0000,,Chaka!
Dialogue: 0,0:14:10.10,0:14:11.54,[Sub_Phụ],,0000,0000,0000,,Mày làm cái đệt gì ở đây thế hả!?
Dialogue: 0,0:14:11.54,0:14:13.01,[Sub_Phụ],,0000,0000,0000,,Mày có trạm rồi mà!
Dialogue: 0,0:14:13.19,0:14:14.19,[Sub_Phụ],,0000,0000,0000,,Sao lại còn ở đây!?
Dialogue: 0,0:14:14.33,0:14:15.74,[Sub_Phụ],,0000,0000,0000,,Thôi mà, thôi mà.
Dialogue: 0,0:14:15.74,0:14:17.05,[Sub_Phụ],,0000,0000,0000,,Lắm người càng tốt chứ sao.
Dialogue: 0,0:14:17.32,0:14:18.32,[Sub_Phụ],,0000,0000,0000,,Ha, tiểu thư?
Dialogue: 0,0:14:18.80,0:14:19.68,[Sub_Phụ],,0000,0000,0000,,Chaka!
Dialogue: 0,0:14:19.68,0:14:21.84,[Sub_Phụ],,0000,0000,0000,,Nói năng bất kể trên dưới thế à!
Dialogue: 0,0:14:22.12,0:14:23.52,[Sub_Phụ],,0000,0000,0000,,Ai cho phép mày láo thế hả!
Dialogue: 0,0:14:23.89,0:14:25.07,[Sub_Phụ],,0000,0000,0000,,Có nghe không hả, thằng lợn!?
Dialogue: 0,0:14:35.12,0:14:36.78,[Sub_Phụ],,0000,0000,0000,,Chaka, mấy đứa này...
Dialogue: 0,0:14:36.78,0:14:37.76,[Sub_Phụ],,0000,0000,0000,,Là ai?
Dialogue: 0,0:14:37.98,0:14:39.32,[Sub_Phụ],,0000,0000,0000,,Yoshida-san.
Dialogue: 0,0:14:39.32,0:14:40.15,[Sub_Phụ],,0000,0000,0000,,Có chuyện này.
Dialogue: 0,0:14:40.50,0:14:42.08,[Sub_Phụ],,0000,0000,0000,,Ông anh...
Dialogue: 0,0:14:42.08,0:14:43.03,[Sub_Phụ],,0000,0000,0000,,Thiệt tốt tính quá.
Dialogue: 0,0:14:47.02,0:14:48.27,[Sub_Phụ],,0000,0000,0000,,Có đau hông?
Dialogue: 0,0:14:48.51,0:14:50.20,[Sub_Phụ],,0000,0000,0000,,Xin lỗi nhé, Yoshida-san.
Dialogue: 0,0:14:50.60,0:14:52.65,[Sub_Phụ],,0000,0000,0000,,Con mẹ mày!
Dialogue: 0,0:14:52.65,0:14:54.44,[Sub_Phụ],,0000,0000,0000,,Chà, phải nói sao nhỉ...
Dialogue: 0,0:14:54.44,0:14:57.17,[Sub_Phụ],,0000,0000,0000,,Cứ theo mấy bố thì mấy đứa \Nbọn này chẳng kiếm chác được gì cả.
Dialogue: 0,0:14:59.27,0:15:02.17,[Sub_Phụ],,0000,0000,0000,,Mà, có là Kousa hay lũ Nga bựa thì cũng chả sao.
Dialogue: 0,0:15:02.44,0:15:05.24,[Sub_Phụ],,0000,0000,0000,,Có ai lại bạc đãi với khách quí \Nmang quà dâng đến tận nhà bao giờ.
Dialogue: 0,0:15:05.42,0:15:06.80,[Sub_Phụ],,0000,0000,0000,,Ha, Tiểu thư!
Dialogue: 0,0:15:07.43,0:15:09.05,[Sub_Phụ],,0000,0000,0000,,Tiểu thư, mau chạy đi!
Dialogue: 0,0:15:09.05,0:15:11.40,[Sub_Phụ],,0000,0000,0000,,Có thôi có trò cù nhây đi không hả, thằng già!?
Dialogue: 0,0:15:11.40,0:15:13.10,[Sub_Phụ],,0000,0000,0000,,Mẹ, nhức tai vãi.
Dialogue: 0,0:15:13.48,0:15:15.31,[Sub_Phụ],,0000,0000,0000,,Mau đi chết đi này.
Dialogue: 0,0:15:17.00,0:15:18.89,[Sub_Phụ],,0000,0000,0000,,Khuyến mãi thêm phát nữa nè!
Dialogue: 0,0:15:21.33,0:15:22.15,[Sub_Phụ],,0000,0000,0000,,Con kia!
Dialogue: 0,0:15:23.36,0:15:24.74,[Sub_Phụ],,0000,0000,0000,,Đau đó nghe mày!
Dialogue: 0,0:15:26.71,0:15:27.55,[Sub_Phụ],,0000,0000,0000,,Đệt nó.
Dialogue: 0,0:15:27.55,0:15:28.40,[Sub_Phụ],,0000,0000,0000,,Ai chà.
Dialogue: 0,0:15:28.47,0:15:30.92,[Sub_Phụ],,0000,0000,0000,,Hana-chan mà sôi máu lên là kinh lắm à.
Dialogue: 0,0:15:30.92,0:15:32.42,[Sub_Phụ],,0000,0000,0000,,Tội con bé này ghê...
Dialogue: 0,0:15:32.42,0:15:35.31,[Sub_Phụ],,0000,0000,0000,,Mày có biết chạy va vào người khác là phạm tội gì không.
Dialogue: 0,0:15:36.84,0:15:40.02,[Sub_Phụ],,0000,0000,0000,,Đau lắm đó! Nghe không hả!
Dialogue: 0,0:15:40.02,0:15:42.02,[Sub_Phụ],,0000,0000,0000,,Cỡ mày là phải thế này này!
Dialogue: 0,0:15:46.32,0:15:48.29,[Sub_Phụ],,0000,0000,0000,,Mồm câm hay sao mà không nói hả!?
Dialogue: 0,0:15:48.72,0:15:50.10,[Sub_Phụ],,0000,0000,0000,,"Tôi có lỗi" này?
Dialogue: 0,0:15:50.10,0:15:52.10,[Sub_Phụ],,0000,0000,0000,,"Xin lỗi anh" đâu hả? Nói mau!
Dialogue: 0,0:15:53.36,0:15:54.74,[Sub_Phụ],,0000,0000,0000,,Đứng dậy coi nào!
Dialogue: 0,0:15:54.74,0:15:56.33,[Sub_Phụ],,0000,0000,0000,,Ay da, Hanada à.
Dialogue: 0,0:15:56.96,0:15:59.71,[Sub_Phụ],,0000,0000,0000,,Ai cho mày lộng quyền ở chỗ này hả?
Dialogue: 0,0:15:59.70,0:16:01.14,[Sub_Phụ],,0000,0000,0000,,Mày mà quá tay...
Dialogue: 0,0:16:02.38,0:16:03.70,[Sub_Phụ],,0000,0000,0000,,Chết đừng có trách.
Dialogue: 0,0:16:03.83,0:16:06.20,[Sub_Phụ],,0000,0000,0000,,Thiệt xin lỗi nhiều nha, Yuki-chan.
Dialogue: 0,0:16:06.20,0:16:10.43,[Sub_Phụ],,0000,0000,0000,,Bọn đàn em đần độn của tôi cứ điên lên\N là vung chân múa tay loạn cả lên đó mà.
Dialogue: 0,0:16:11.21,0:16:12.88,[Sub_Phụ],,0000,0000,0000,,Mày tàn rồi, Hanada.
Dialogue: 0,0:16:12.88,0:16:15.00,[Sub_Phụ],,0000,0000,0000,,Tha cho em! Tha cho em đại ca!
Dialogue: 0,0:16:15.92,0:16:20.18,[Sub_Phụ],,0000,0000,0000,,Vậy nên cô em biết khôn mà phục tùng nghe\N lệnh bọn này kẻo lại mang họa vào thân đó
Dialogue: 0,0:16:32.70,0:16:34.74,[Black_Lagoon],,0000,0000,0000,,Rock, có mỗi lối này thôi à?
Dialogue: 0,0:16:35.60,0:16:37.99,[Black_Lagoon],,0000,0000,0000,,Ta là khách không mời mà...
Dialogue: 0,0:16:37.99,0:16:38.98,[Black_Lagoon],,0000,0000,0000,,Lối cửa hậu xem ra...
Dialogue: 0,0:16:39.04,0:16:39.83,[Black_Lagoon],,0000,0000,0000,,Không phải...
Dialogue: 0,0:16:39.83,0:16:41.03,[Black_Lagoon],,0000,0000,0000,,Không để ý gì à, Rock?
Dialogue: 0,0:16:42.28,0:16:45.30,[Black_Lagoon],,0000,0000,0000,,Cái xó này bốc mùi không lẫn vào đâu được cả.
Dialogue: 0,0:16:45.85,0:16:46.66,[Black_Lagoon],,0000,0000,0000,,Dấu chân?
Dialogue: 0,0:16:46.66,0:16:47.87,[Black_Lagoon],,0000,0000,0000,,Không hay rồi! Yukio!
Dialogue: 0,0:16:48.35,0:16:49.99,[Black_Lagoon],,0000,0000,0000,,Đừng có hấp tấp, Rock!
Dialogue: 0,0:16:53.88,0:16:54.82,[Black_Lagoon],,0000,0000,0000,,Yukio-chan!
Dialogue: 0,0:16:59.96,0:17:00.93,[Black_Lagoon],,0000,0000,0000,,Chết tiệt.
Dialogue: 0,0:17:01.79,0:17:02.76,[Black_Lagoon],,0000,0000,0000,,Là do bà chị làm à?
Dialogue: 0,0:17:03.57,0:17:06.07,[Black_Lagoon],,0000,0000,0000,,Nếu thế thì phải có xác cô bé ở đây nữa rồi.
Dialogue: 0,0:17:06.43,0:17:07.99,[Black_Lagoon],,0000,0000,0000,,Với Hotel Moscow...
Dialogue: 0,0:17:07.99,0:17:10.06,[Black_Lagoon],,0000,0000,0000,,Bắt cóc cô bé lúc này cũng chẳng được cái gì.
Dialogue: 0,0:17:11.54,0:17:13.07,[Black_Lagoon],,0000,0000,0000,,Bà chị xài khẩu Stechkin...
Dialogue: 0,0:17:13.07,0:17:15.47,[Black_Lagoon],,0000,0000,0000,,Còn tên này lại xài khẩu tự động dạng như Varjag.
Dialogue: 0,0:17:15.59,0:17:17.03,[Black_Lagoon],,0000,0000,0000,,Cũng có thể là khẩu AKS...
Dialogue: 0,0:17:17.61,0:17:18.88,[Black_Lagoon],,0000,0000,0000,,Nhìn đằng cửa mà xem.
Dialogue: 0,0:17:18.88,0:17:20.81,[Black_Lagoon],,0000,0000,0000,,Sao lại không có vỏ đạn nào?
Dialogue: 0,0:17:21.25,0:17:22.14,[Black_Lagoon],,0000,0000,0000,,Là một khẩu súng lục.
Dialogue: 0,0:17:22.58,0:17:23.87,[Black_Lagoon],,0000,0000,0000,,Ờ, rất có thể.
Dialogue: 0,0:17:24.22,0:17:25.56,[Black_Lagoon],,0000,0000,0000,,Yoshida thiệt xui vãi đái.
Dialogue: 0,0:17:25.56,0:17:27.47,[Black_Lagoon],,0000,0000,0000,,Giờ người lão thành ống thông gió rồi.
Dialogue: 0,0:17:28.39,0:17:29.52,[Black_Lagoon],,0000,0000,0000,,Nhìn coi.
Dialogue: 0,0:17:29.52,0:17:30.86,[Black_Lagoon],,0000,0000,0000,,Lỗ đạn rất lớn...
Dialogue: 0,0:17:30.86,0:17:31.82,[Black_Lagoon],,0000,0000,0000,,Hẳn nòng nó phải to lắm.
Dialogue: 0,0:17:32.26,0:17:37.28,[Black_Lagoon],,0000,0000,0000,,Chỉ có lũ khoái khoe mẽ hay những\N thằng ngu ngoại hạng mới xài mấy khẩu này.
Dialogue: 0,0:17:38.28,0:17:41.14,[Black_Lagoon],,0000,0000,0000,,Mà đủ mọi tiêu chuẩn kể trên coi ra chỉ đúng một gã.
Dialogue: 0,0:17:42.70,0:17:43.91,[Black_Lagoon],,0000,0000,0000,,Là hắn!
Dialogue: 0,0:17:43.91,0:17:45.42,[Black_Lagoon],,0000,0000,0000,,Nhưng việc gì hắn phải phản bội cơ chứ?
Dialogue: 0,0:18:09.43,0:18:10.48,[Sub_Phụ],,0000,0000,0000,,Sao thế nhỉ.
Dialogue: 0,0:18:10.87,0:18:13.53,[Sub_Phụ],,0000,0000,0000,,Không tỏa ra mùi thuốc súng.
Dialogue: 0,0:18:13.90,0:18:15.14,[Black_Lagoon],,0000,0000,0000,,Get it, Jumbo?
Dialogue: 0,0:18:15.29,0:18:18.66,[Black_Lagoon],,0000,0000,0000,,Lão Yoshida về với đất mẹ chả liên\N quan đéo gì đến hai bé chó lửa này cả.
Dialogue: 0,0:18:22.08,0:18:22.85,[Black_Lagoon],,0000,0000,0000,,Ginji-san.
Dialogue: 0,0:18:23.48,0:18:24.98,[Black_Lagoon],,0000,0000,0000,,Việc này không phải do chúng tôi.
Dialogue: 0,0:18:24.98,0:18:27.58,[Black_Lagoon],,0000,0000,0000,,Cả Hotel Moscow cũng không nốt.
Dialogue: 0,0:18:28.01,0:18:29.37,[Black_Lagoon],,0000,0000,0000,,Chúng tôi...
Dialogue: 0,0:18:29.37,0:18:32.22,[Black_Lagoon],,0000,0000,0000,,Đến gặp Yukio-chan để đưa cô ấy trốn đi...
Dialogue: 0,0:18:32.22,0:18:33.52,[Black_Lagoon],,0000,0000,0000,,Thì gặp ngay cảnh này.
Dialogue: 0,0:18:33.96,0:18:34.91,[Black_Lagoon],,0000,0000,0000,,Xin hãy tin tôi.
Dialogue: 0,0:18:35.29,0:18:37.76,[Black_Lagoon],,0000,0000,0000,,Chúng tôi hoàn toàn không can hệ tới Hotel Moscow...
Dialogue: 0,0:18:40.13,0:18:41.33,[Black_Lagoon],,0000,0000,0000,,Chờ đã, Ginji-san!
Dialogue: 0,0:18:41.33,0:18:42.71,[Black_Lagoon],,0000,0000,0000,,Tôi vẫn chưa nói xong!
Dialogue: 0,0:18:43.80,0:18:46.29,[Black_Lagoon],,0000,0000,0000,,Anh về mà tôi không nghe tiếng xe.
Dialogue: 0,0:18:47.53,0:18:50.16,[Black_Lagoon],,0000,0000,0000,,Vậy là anh đi bộ một mình về đây.
Dialogue: 0,0:18:50.80,0:18:52.64,[Black_Lagoon],,0000,0000,0000,,Ngoài kia có rất nhiều dấu bánh xe.
Dialogue: 0,0:18:53.07,0:18:55.54,[Black_Lagoon],,0000,0000,0000,,Căn cứ theo vết chân ở tại đây...
Dialogue: 0,0:18:55.92,0:18:58.87,[Black_Lagoon],,0000,0000,0000,,Có thể thấy chúng rất đông và từ xa đến đây.
Dialogue: 0,0:19:00.38,0:19:02.39,[Black_Lagoon],,0000,0000,0000,,Anh tính một mình đi tìm chúng sao?
Dialogue: 0,0:19:03.12,0:19:04.57,[Sub_Phụ],,0000,0000,0000,,Có thế cũng không liên quan đến cậu.
Dialogue: 0,0:19:04.72,0:19:05.89,[Black_Lagoon],,0000,0000,0000,,Không được đâu!
Dialogue: 0,0:19:05.89,0:19:07.45,[Black_Lagoon],,0000,0000,0000,,Thủ phạm là kẻ ở trong băng!
Dialogue: 0,0:19:08.23,0:19:12.06,[Black_Lagoon],,0000,0000,0000,,Chắc chắn hắn biết anh sẽ đến cứu cô ấy, và phục sẵn ở đó rồi.
Dialogue: 0,0:19:12.79,0:19:16.66,[Black_Lagoon],,0000,0000,0000,,Nhưng nếu cạnh anh có thêm một tay súng thì thế nào?
Dialogue: 0,0:19:17.43,0:19:19.14,[Black_Lagoon],,0000,0000,0000,,Hắn không hề tính đến điều đó.
Dialogue: 0,0:19:21.93,0:19:24.22,[Sub_Phụ],,0000,0000,0000,,Nghĩa là muốn biết hắn ở đâu chứ gì?
Dialogue: 0,0:19:31.21,0:19:33.18,[Sub_Phụ][02],,0000,0000,0000,,Vừa nhận được fax của khách hàng.{\i0}
Dialogue: 0,0:19:35.18,0:19:37.15,[Black_Lagoon],,0000,0000,0000,,Gì mà toàn tiếng Nhật chay thế này.
Dialogue: 0,0:19:37.22,0:19:38.63,[Black_Lagoon],,0000,0000,0000,,Nhạc nhẽo đâu hết cả rồi?
Dialogue: 0,0:19:38.63,0:19:40.54,[Black_Lagoon],,0000,0000,0000,,Nghe hiểu chữ nào chết liền.
Dialogue: 0,0:19:40.72,0:19:41.51,[Black_Lagoon],,0000,0000,0000,,FEN thì sao?
Dialogue: 0,0:19:41.51,0:19:43.90,[Black_Lagoon],,0000,0000,0000,,Nghe cái lũ DJ đó có mà ong hết cả đầu.
Dialogue: 0,0:19:46.59,0:19:51.05,[Black_Lagoon],,0000,0000,0000,,Yeah, Guitar Wolf đó! Tôi biết ban này!\NCó mấy bài nghe được lắm.
Dialogue: 0,0:20:15.29,0:20:17.54,[Sub_Phụ],,0000,0000,0000,,Cậu phiên dịch. Đến ngã tư thì rẽ trái.
Dialogue: 0,0:20:23.19,0:20:25.82,[Sub_Phụ],,0000,0000,0000,,Tôi vẫn không hiểu cậu giúp để được cái gì.
Dialogue: 0,0:20:26.71,0:20:27.51,[Black_Lagoon],,0000,0000,0000,,Ginji-san...
Dialogue: 0,0:20:28.20,0:20:30.72,[Black_Lagoon],,0000,0000,0000,,Cô bé không phải là người nên dính sâu vào chuyện này.
Dialogue: 0,0:20:31.03,0:20:31.92,[Black_Lagoon],,0000,0000,0000,,Tôi nghĩ vậy.
Dialogue: 0,0:20:32.31,0:20:35.10,[Black_Lagoon],,0000,0000,0000,,Trông thấy viễn cảnh cô bé mất đi \Ntương lại của mình khiến tôi không chịu được.
Dialogue: 0,0:20:36.01,0:20:37.74,[Sub_Phụ],,0000,0000,0000,,Nếu có ai đó giang tay đón lấy cô ấy...
Dialogue: 0,0:20:38.26,0:20:40.04,[Sub_Phụ],,0000,0000,0000,,Thì thật tốt biết bao.
Dialogue: 0,0:20:40.98,0:20:43.15,[Sub_Phụ],,0000,0000,0000,,Chỉ cần một ai đó đón lấy cô ấy...
Dialogue: 0,0:20:45.52,0:20:47.14,[Sub_Phụ],,0000,0000,0000,,Strike~!
Dialogue: 0,0:20:47.14,0:20:48.38,[Sub_Phụ],,0000,0000,0000,,Cứ ăn một điểm là cởi một món nhá.
Dialogue: 0,0:20:48.38,0:20:49.63,[Sub_Phụ],,0000,0000,0000,,Thích sao hả, Okazaki?
Dialogue: 0,0:20:49.82,0:20:51.75,[Sub_Phụ],,0000,0000,0000,,Trên? Hay dưới nào?
Dialogue: 0,0:20:51.75,0:20:53.19,[Sub_Phụ],,0000,0000,0000,,A~ Vậy dưới đi.
Dialogue: 0,0:20:53.19,0:20:56.00,[Sub_Phụ],,0000,0000,0000,,Vậy cược đến khi nào hết trần như nhuộng thì thôi.
Dialogue: 0,0:20:57.16,0:20:59.20,[Sub_Phụ],,0000,0000,0000,,Cứ thế nhé, chơi tới nào!
Dialogue: 0,0:20:59.20,0:21:01.97,[Sub_Phụ],,0000,0000,0000,,Cạo sạch lông nhé. Chắc phải hay lắm đó!
Dialogue: 0,0:21:08.53,0:21:10.81,[Black_Lagoon],,0000,0000,0000,,Dark Tower cơ à.
Dialogue: 0,0:21:10.87,0:21:13.37,[Black_Lagoon],,0000,0000,0000,,Chàng hiệp sĩ đến cứu công chúa sao.
Dialogue: 0,0:21:15.75,0:21:16.55,[Black_Lagoon],,0000,0000,0000,,Rock...
Dialogue: 0,0:21:16.55,0:21:18.21,[Black_Lagoon],,0000,0000,0000,,Bọn tôi đập thẳng phía trước.
