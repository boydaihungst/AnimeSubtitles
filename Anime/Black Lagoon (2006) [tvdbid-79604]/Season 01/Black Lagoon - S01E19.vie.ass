Dialogue: 0,0:18:52.32,0:18:52.94,[Black_Lagoon],,0000,0000,0000,,Vậy.
Dialogue: 0,0:18:52.94,0:18:53.74,[Black_Lagoon],,0000,0000,0000,,Xùy!
Dialogue: 0,0:18:53.74,0:18:55.28,[Black_Lagoon],,0000,0000,0000,,Đi nhanh lên cho rồi việc. Xùy xùy.
Dialogue: 0,0:18:58.56,0:19:00.67,[Black_Lagoon][00],,0000,0000,0000,,Sẽ chờ anh nhưng...
Dialogue: 0,0:19:00.67,0:19:02.00,[Black_Lagoon][00],,0000,0000,0000,,Đừng lâu quá nhé.
Dialogue: 0,0:19:02.35,0:19:04.28,[Black_Lagoon][00],,0000,0000,0000,,Uống hết lon nước này.
Dialogue: 0,0:19:04.83,0:19:06.79,[Black_Lagoon][00],,0000,0000,0000,,Rồi chia tay từ đây...
Dialogue: 0,0:19:06.79,0:19:07.48,[Black_Lagoon][00],,0000,0000,0000,,Đồng sự.
Dialogue: 0,0:19:15.78,0:19:19.90,[Black_Lagoon],,0000,0000,0000,,Đúng là có ở đâu thì bầu trời vẫn chả khác mấy.
Dialogue: 0,0:19:19.95,0:19:22.21,[Black_Lagoon],,0000,0000,0000,,Ở đây hay ở Mott Street cũng thế.
Dialogue: 0,0:19:26.49,0:19:28.55,[Black_Lagoon],,0000,0000,0000,,Hey! Cái nhãi chết dịch kia!
Dialogue: 0,0:19:28.76,0:19:32.08,[Black_Lagoon],,0000,0000,0000,,Nếu khoái phơ bể gáo nhau thì vác xác đến Lebanon mà đú!
Dialogue: 0,0:19:32.16,0:19:32.96,[Black_Lagoon],,0000,0000,0000,,Ái chà...
Dialogue: 0,0:19:32.96,0:19:35.08,[Black_Lagoon],,0000,0000,0000,,Ra thích đú thành tay súng cơ à?
Dialogue: 0,0:19:35.38,0:19:37.83,[Black_Lagoon],,0000,0000,0000,,Lo mà hối lỗi với bé chó lửa này đi.
Dialogue: 0,0:19:38.06,0:19:39.34,[Black_Lagoon],,0000,0000,0000,,Rồi nhé, mấy nhóc!
Dialogue: 0,0:19:39.34,0:19:42.65,[Black_Lagoon],,0000,0000,0000,,Nhìn cho kĩ mấy lon rỗng đằng kia, được chưa?
Dialogue: 0,0:19:43.20,0:19:43.63,[Black_Lagoon],,0000,0000,0000,,Bang!
Dialogue: 0,0:19:43.63,0:19:44.14,[Black_Lagoon][01],,0000,0000,0000,,Bang!
Dialogue: 0,0:19:44.14,0:19:44.89,[Black_Lagoon],,0000,0000,0000,,Bang!
Dialogue: 0,0:19:45.01,0:19:45.79,[Sub_Phụ],,0000,0000,0000,,Ghê quá!
Dialogue: 0,0:19:45.59,0:19:46.61,[Sub_Phụ],,0000,0000,0000,,Ngầu quá đi!
Dialogue: 0,0:19:46.61,0:19:47.63,[Sub_Phụ],,0000,0000,0000,,Như làm phép ấy!
Dialogue: 0,0:19:47.63,0:19:49.30,[Black_Lagoon],,0000,0000,0000,,Hệt như Annie Oakley, phải không?
Dialogue: 0,0:19:49.94,0:19:51.01,[Black_Lagoon],,0000,0000,0000,,Jack McCall!
Dialogue: 0,0:19:51.01,0:19:52.41,[Black_Lagoon],,0000,0000,0000,,Ta tìm Wild Bill để trả thù!
Dialogue: 0,0:19:52.68,0:19:54.97,[Black_Lagoon],,0000,0000,0000,,Chúng mày nghĩ có thể thắng được Incredible Jane ư?
Dialogue: 0,0:19:54.97,0:19:55.65,[Black_Lagoon],,0000,0000,0000,,Nào!
Dialogue: 0,0:19:55.65,0:19:56.53,[Black_Lagoon],,0000,0000,0000,,Nhào vô đây.
Dialogue: 0,0:20:02.36,0:20:04.39,[Sub_Phụ][01],,0000,0000,0000,,Trúng đạn mất rồi!
Dialogue: 0,0:20:04.72,0:20:06.41,[Black_Lagoon],,0000,0000,0000,,Hey, hey, thế là sao!
Dialogue: 0,0:20:06.41,0:20:08.75,[Black_Lagoon],,0000,0000,0000,,No, no, sai lè hết cả rồi.
Dialogue: 0,0:20:09.26,0:20:12.85,[Black_Lagoon],,0000,0000,0000,,Chỉ có trên phim ảnh với mấy cái TV shows người ta mới ngã kiểu dở hơi thế thôi.
Dialogue: 0,0:20:13.03,0:20:14.46,[Black_Lagoon],,0000,0000,0000,,Nghe này.
Dialogue: 0,0:20:14.46,0:20:16.47,[Black_Lagoon],,0000,0000,0000,,Ngoài đời, nó giống như tự nhiên ta mất hết sức nặng vậy.
Dialogue: 0,0:20:16.47,0:20:17.39,[Black_Lagoon],,0000,0000,0000,,Đã rõ chưa?
Dialogue: 0,0:20:17.94,0:20:20.03,[Black_Lagoon],,0000,0000,0000,,Cứ như mọi thứ dưới gối ta tan biến đi vậy...
Dialogue: 0,0:20:20.03,0:20:23.11,[Black_Lagoon],,0000,0000,0000,,Rồi mất đi cảm giác thăng bằng nên đầu sẽ chúi về trước.
Dialogue: 0,0:20:23.34,0:20:24.36,[Black_Lagoon],,0000,0000,0000,,Để chỉ cho mà làm.
Dialogue: 0,0:20:24.36,0:20:24.91,[Black_Lagoon],,0000,0000,0000,,Thằng này.
Dialogue: 0,0:20:39.43,0:20:40.63,[Sub_Phụ],,0000,0000,0000,,Nói thiệt là...
Dialogue: 0,0:20:40.63,0:20:42.99,[Sub_Phụ],,0000,0000,0000,,Trông chả ngầu tí nào, chị gái à.
Dialogue: 0,0:20:44.90,0:20:46.92,[Black_Lagoon],,0000,0000,0000,,Ngỏm thế mới chuẩn chứ.
Dialogue: 0,0:20:46.92,0:20:48.82,[Black_Lagoon],,0000,0000,0000,,Ngầu để làm quái gì chứ.
Dialogue: 0,0:20:49.90,0:20:51.01,[Black_Lagoon],,0000,0000,0000,,Cô làm gì thế hả?
Dialogue: 0,0:20:52.24,0:20:53.64,[Black_Lagoon],,0000,0000,0000,,Nhìn thấy hết từ nãy giờ hả?
Dialogue: 0,0:20:53.94,0:20:56.58,[Black_Lagoon],,0000,0000,0000,,Từ lúc cô giả bộ đang ở trong quán rượu Deadwood kìa.
Dialogue: 0,0:20:57.71,0:20:59.80,[Black_Lagoon],,0000,0000,0000,,Với kịch bản coi ra không chuẩn lắm.
Dialogue: 0,0:20:59.80,0:21:02.02,[Black_Lagoon],,0000,0000,0000,,Calamity Jane đâu có chết ở khúc đó.
Dialogue: 0,0:21:02.32,0:21:03.56,[Black_Lagoon],,0000,0000,0000,,Chết tiệt.
Dialogue: 0,0:21:06.12,0:21:07.48,[Black_Lagoon],,0000,0000,0000,,Súng đồ chơi của em!
Dialogue: 0,0:21:07.48,0:21:08.25,[Black_Lagoon],,0000,0000,0000,,Nghe này!
Dialogue: 0,0:21:08.25,0:21:11.46,[Black_Lagoon],,0000,0000,0000,,Anh mà hé môi với Dutch hay Benny về vụ này...
Dialogue: 0,0:21:11.46,0:21:13.92,[Black_Lagoon],,0000,0000,0000,,Là tôi xẻo hai hòn bón cho anh ăn đấy!
Dialogue: 0,0:21:13.82,0:21:15.73,[Black_Lagoon],,0000,0000,0000,,Không có! Không có đâu!
Dialogue: 0,0:21:17.76,0:21:18.41,[Black_Lagoon],,0000,0000,0000,,Thế?
Dialogue: 0,0:21:18.92,0:21:20.46,[Black_Lagoon],,0000,0000,0000,,Có gặp được người nhà anh không?
Dialogue: 0,0:21:20.60,0:21:22.19,[Black_Lagoon],,0000,0000,0000,,Ơ-Ờ...
Dialogue: 0,0:21:22.19,0:21:23.92,[Black_Lagoon],,0000,0000,0000,,Thì tôi có vào nhà...
Dialogue: 0,0:21:24.39,0:21:25.36,[Black_Lagoon],,0000,0000,0000,,Nhưng...
Dialogue: 0,0:21:25.36,0:21:26.75,[Black_Lagoon],,0000,0000,0000,,Chẳng thấy họ đâu.
Dialogue: 0,0:21:27.14,0:21:28.17,[Black_Lagoon],,0000,0000,0000,,Họ không có nhà.
Dialogue: 0,0:21:29.14,0:21:30.03,[Black_Lagoon],,0000,0000,0000,,Sao vậy?
Dialogue: 0,0:21:30.51,0:21:32.29,[Black_Lagoon],,0000,0000,0000,,Không, chả có gì.
Dialogue: 0,0:21:33.16,0:21:35.62,[Black_Lagoon],,0000,0000,0000,,Mà ta hãy còn ở đây thêm mấy ngày mà.
Dialogue: 0,0:21:36.78,0:21:37.89,[Black_Lagoon],,0000,0000,0000,,Phải ha.
Dialogue: 0,0:21:39.13,0:21:41.91,[Black_Lagoon],,0000,0000,0000,,{\i1}Sao anh ta lại không vào?
Dialogue: 0,0:21:41.91,0:21:44.81,[Black_Lagoon],,0000,0000,0000,,{\i1}Nơi này hợp với anh ấy thế cơ mà.{\i0}
Dialogue: 0,0:21:45.93,0:21:47.53,[Black_Lagoon],,0000,0000,0000,,{\i1}Cái tên này đúng là...{\i0}
