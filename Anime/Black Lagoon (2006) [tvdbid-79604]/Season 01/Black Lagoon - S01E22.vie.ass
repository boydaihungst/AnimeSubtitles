Dialogue: 0,0:05:57.40,0:05:58.02,[Black_Lagoon],,0000,0000,0000,,Vậy.
Dialogue: 0,0:05:58.02,0:05:59.45,[Black_Lagoon],,0000,0000,0000,,Nhờ anh cả đấy, đồng sự.
Dialogue: 0,0:06:02.07,0:06:03.50,[Black_Lagoon],,0000,0000,0000,,Có tí lời mà cũng keo kiệt.
Dialogue: 0,0:06:04.40,0:06:05.55,[Black_Lagoon],,0000,0000,0000,,Giờ thì...
Dialogue: 0,0:06:08.80,0:06:10.42,[Black_Lagoon],,0000,0000,0000,,Thiệt xui cho lũ mày.
Dialogue: 0,0:06:10.42,0:06:12.02,[Black_Lagoon],,0000,0000,0000,,Tao thấy thương đấy.
Dialogue: 0,0:06:12.95,0:06:15.44,[Black_Lagoon],,0000,0000,0000,,Đừng hòng thằng nào còn sống ra khỏi đây hôm nay.
Dialogue: 0,0:06:15.44,0:06:16.82,[Black_Lagoon],,0000,0000,0000,,Một đứa cũng không.
Dialogue: 0,0:06:17.55,0:06:19.75,[Black_Lagoon],,0000,0000,0000,,Chỗ này thành nhà khách địa ngục rồi.
Dialogue: 0,0:06:19.75,0:06:21.56,[Black_Lagoon],,0000,0000,0000,,Chạy được thì chạy đi...
Dialogue: 0,0:06:21.98,0:06:23.28,[Black_Lagoon],,0000,0000,0000,,Không là bị...
Dialogue: 0,0:06:23.28,0:06:25.67,[Black_Lagoon],,0000,0000,0000,,Boogeyman xơi hết đó!
Dialogue: 0,0:06:28.17,0:06:29.02,[Black_Lagoon],,0000,0000,0000,,Vừa hay.
Dialogue: 0,0:06:32.37,0:06:34.07,[Black_Lagoon],,0000,0000,0000,,Time to live forever...
Dialogue: 0,0:06:34.49,0:06:35.28,[Black_Lagoon],,0000,0000,0000,,Baby.
Dialogue: 0,0:06:39.78,0:06:42.13,[Sub_Phụ],,0000,0000,0000,,Sao tự nhiên im ắng thế này...
Dialogue: 0,0:06:42.13,0:06:43.27,[Sub_Phụ],,0000,0000,0000,,Chaka-san...
Dialogue: 0,0:06:43.27,0:06:44.64,[Sub_Phụ],,0000,0000,0000,,Có khi nào bọn kia...?
Dialogue: 0,0:06:44.95,0:06:46.27,[Sub_Phụ],,0000,0000,0000,,Dạ, Chaka-san!
Dialogue: 0,0:06:47.12,0:06:49.56,[Sub_Phụ],,0000,0000,0000,,Tao nghe rồi! Im bớt đi.
Dialogue: 0,0:06:49.56,0:06:51.05,[Sub_Phụ],,0000,0000,0000,,Hả~! Thế thì sao chứ?
Dialogue: 0,0:06:51.05,0:06:52.38,[Sub_Phụ],,0000,0000,0000,,Chắc ngỏm hết cả rồi.
Dialogue: 0,0:06:53.89,0:06:55.69,[Sub_Phụ],,0000,0000,0000,,Cái chó gì hả, thằng điên kia!?
Dialogue: 0,0:06:55.69,0:06:57.01,[Sub_Phụ],,0000,0000,0000,,Mày nói thế mà được à?
Dialogue: 0,0:06:57.23,0:07:00.27,[Sub_Phụ],,0000,0000,0000,,Tao chán ngấy cái trò lẽo đẽo theo mày rồi!
Dialogue: 0,0:07:03.33,0:07:05.37,[Sub_Phụ],,0000,0000,0000,,Nếu còn thì giờ mà nổi khùng...
Dialogue: 0,0:07:05.37,0:07:06.63,[Sub_Phụ],,0000,0000,0000,,Thì lo mà kiếm con đĩ đó đi.
Dialogue: 0,0:07:07.20,0:07:08.84,[Sub_Phụ],,0000,0000,0000,,Mà mày làm thế làm gì hả?
Dialogue: 0,0:07:08.84,0:07:10.74,[Sub_Phụ],,0000,0000,0000,,Hỏng hết kế hoạch của bố rồi.
Dialogue: 0,0:07:11.60,0:07:13.22,[Sub_Phụ],,0000,0000,0000,,Còn không đi!
Dialogue: 0,0:07:15.31,0:07:16.43,[Sub_Phụ],,0000,0000,0000,,Ù té chạy à?
Dialogue: 0,0:07:16.78,0:07:17.67,[Sub_Phụ],,0000,0000,0000,,Càng khỏe!
Dialogue: 0,0:07:19.50,0:07:20.72,[Sub_Phụ],,0000,0000,0000,,Sư nó!
Dialogue: 0,0:07:20.82,0:07:21.28,[Black_Lagoon],,0000,0000,0000,,Ôi ya!
Dialogue: 0,0:07:21.28,0:07:22.11,[Black_Lagoon][01],,0000,0000,0000,,Ôi ya!
Dialogue: 0,0:07:22.11,0:07:23.29,[Black_Lagoon],,0000,0000,0000,,Bất ngờ thiệt à.
Dialogue: 0,0:07:25.22,0:07:27.19,[Black_Lagoon],,0000,0000,0000,,Bắn ngay cả đồng bọn của mình.
Dialogue: 0,0:07:28.26,0:07:30.42,[Black_Lagoon],,0000,0000,0000,,Lần đầu tao thấy một thằng ti tiện như mày đấy.
Dialogue: 0,0:07:32.05,0:07:35.26,[Black_Lagoon],,0000,0000,0000,,Chú mày còn tung tăng thế này...
Dialogue: 0,0:07:35.26,0:07:37.29,[Black_Lagoon],,0000,0000,0000,,Chắc là vẫn chưa giáp mặt lão Jumbo nhỉ.
Dialogue: 0,0:07:39.10,0:07:40.68,[Sub_Phụ],,0000,0000,0000,,Mà, thì sao chứ?
Dialogue: 0,0:07:40.97,0:07:43.16,[Sub_Phụ],,0000,0000,0000,,Anh chỉ chờ mỗi cô em thôi.
Dialogue: 0,0:07:43.31,0:07:46.46,[Sub_Phụ],,0000,0000,0000,,Đàn bà mà bắn súng đây cũng lần đâu gặp đó.
Dialogue: 0,0:07:46.46,0:07:48.05,[Sub_Phụ],,0000,0000,0000,,Thiệt là cơ hội hiếm có à.
Dialogue: 0,0:07:48.28,0:07:49.95,[Sub_Phụ],,0000,0000,0000,,Ngủ với anh nhá...
Dialogue: 0,0:07:49.95,0:07:51.15,[Sub_Phụ],,0000,0000,0000,,Revy-chan~
Dialogue: 0,0:07:51.38,0:07:52.17,[Black_Lagoon],,0000,0000,0000,,A-ha~
Dialogue: 0,0:07:52.17,0:07:52.86,[Black_Lagoon],,0000,0000,0000,,Yeah. 
Dialogue: 0,0:07:53.09,0:07:54.65,[Black_Lagoon],,0000,0000,0000,,Thế cơ à.
Dialogue: 0,0:07:54.65,0:07:55.70,[Black_Lagoon],,0000,0000,0000,,Đùa hay thật đó.
Dialogue: 0,0:07:56.13,0:08:00.44,[Sub_Phụ],,0000,0000,0000,,Ta lấy mốc là lúc cái lon này chạm sàn nhá, bé cưng.
Dialogue: 0,0:08:03.49,0:08:04.80,[Sub_Phụ],,0000,0000,0000,,Xong chưa?
Dialogue: 0,0:08:05.53,0:08:06.52,[Sub_Phụ],,0000,0000,0000,,Ten...
Dialogue: 0,0:08:06.52,0:08:07.51,[Sub_Phụ],,0000,0000,0000,,Nine...
Dialogue: 0,0:08:07.51,0:08:08.56,[Sub_Phụ],,0000,0000,0000,,Eight...
Dialogue: 0,0:08:08.56,0:08:09.47,[Sub_Phụ],,0000,0000,0000,,Seven...
Dialogue: 0,0:08:10.97,0:08:11.72,[Sub_Phụ],,0000,0000,0000,,Ế?
Dialogue: 0,0:08:17.58,0:08:20.50,[Black_Lagoon],,0000,0000,0000,,Tính chơi trò bắn súng tay đôi với tao à?
Dialogue: 0,0:08:21.55,0:08:22.58,[Black_Lagoon],,0000,0000,0000,,Nực cười bỏ mẹ.
Dialogue: 0,0:08:23.91,0:08:26.08,[Black_Lagoon],,0000,0000,0000,,Thứ khố rách áo ôm chó chết hạng ba...
Dialogue: 0,0:08:26.08,0:08:28.47,[Black_Lagoon],,0000,0000,0000,,Như mày mà đáng để tao đấu à, hâm vừa thôi.
Dialogue: 0,0:08:29.39,0:08:31.47,[Black_Lagoon],,0000,0000,0000,,Tao giờ cũng muốn giết quách mày cho rồi.
Dialogue: 0,0:08:31.94,0:08:34.65,[Black_Lagoon],,0000,0000,0000,,Nhưng để mày ra đi vui vẻ thế thì chán lắm.
Dialogue: 0,0:08:35.26,0:08:38.77,[Black_Lagoon],,0000,0000,0000,,Thứ mày nên để gã Jumbo xử đi thì hơn.
Dialogue: 0,0:08:38.90,0:08:42.00,[Sub_Phụ],,0000,0000,0000,,Con khốn kia. Đứng lai, con điếm!
Dialogue: 0,0:08:43.37,0:08:44.43,[Sub_Phụ],,0000,0000,0000,,Chết bà mày đi.
Dialogue: 0,0:08:46.54,0:08:48.33,[Sub_Phụ],,0000,0000,0000,,Đệt mày! Đứng lại!
Dialogue: 0,0:08:48.33,0:08:49.47,[Sub_Phụ],,0000,0000,0000,,Đứng lại không hả!
Dialogue: 0,0:08:50.31,0:08:51.47,[Sub_Phụ],,0000,0000,0000,,Đứng lại!
Dialogue: 0,0:08:58.67,0:09:00.94,[Black_Lagoon],,0000,0000,0000,,Xin lỗi để anh chờ lâu à, Jumbo.
Dialogue: 0,0:09:00.94,0:09:02.59,[Black_Lagoon],,0000,0000,0000,,Xếp xong hẹn cho anh rồi đó.
Dialogue: 0,0:09:07.19,0:09:09.12,[Sub_Phụ],,0000,0000,0000,,Hết hài rồi con à.
Dialogue: 0,0:09:09.12,0:09:11.94,[Sub_Phụ],,0000,0000,0000,,Tao điên máu rồi đó, kiếm sĩ quèn.
Dialogue: 0,0:09:13.13,0:09:15.40,[Sub_Phụ],,0000,0000,0000,,Cô em tiểu thư không có ở đây đâu.
Dialogue: 0,0:09:15.40,0:09:17.09,[Sub_Phụ],,0000,0000,0000,,Tao xử ả luôn rồi.
Dialogue: 0,0:09:18.90,0:09:20.14,[Sub_Phụ],,0000,0000,0000,,Hết việc rồi nhé?
Dialogue: 0,0:09:20.14,0:09:23.02,[Sub_Phụ],,0000,0000,0000,,Thôi té về nhà làm takoyaki đi là vừa.
Dialogue: 0,0:09:23.57,0:09:26.51,[Sub_Phụ],,0000,0000,0000,,Cái loại chó má như mày...
Dialogue: 0,0:09:27.44,0:09:31.21,[Sub_Phụ],,0000,0000,0000,,Mà cũng dám ói tiền ra để tiêu cơ à.
Dialogue: 0,0:09:31.78,0:09:32.99,[Sub_Phụ],,0000,0000,0000,,Phải thế không?
Dialogue: 0,0:09:33.55,0:09:36.37,[Sub_Phụ],,0000,0000,0000,,M-Mày được lắm, thằng chó!
Dialogue: 0,0:09:38.76,0:09:41.30,[Black_Lagoon],,0000,0000,0000,,Nào, trổ nghề hết ra xem nào.
Dialogue: 0,0:09:42.79,0:09:44.78,[Sub_Phụ],,0000,0000,0000,,Mày thích chơi kiểu tao cũng chiều.
Dialogue: 0,0:10:21.90,0:10:23.56,[Sub_Phụ],,0000,0000,0000,,Thằng khốn kia! 
Dialogue: 0,0:10:23.55,0:10:26.23,[Sub_Phụ],,0000,0000,0000,,Tao giết mày, thằng khốn!
Dialogue: 0,0:10:27.04,0:10:28.08,[Sub_Phụ],,0000,0000,0000,,Tao giết mày!
Dialogue: 0,0:10:29.94,0:10:31.41,[Black_Lagoon],,0000,0000,0000,,Yên tĩnh hẳn rồi.
Dialogue: 0,0:10:31.98,0:10:34.84,[Black_Lagoon],,0000,0000,0000,,Chắc Revy và Gin-san xử lí hết bọn chúng rồi.
Dialogue: 0,0:10:35.35,0:10:37.77,[Black_Lagoon],,0000,0000,0000,,Ta cứ ở đây thêm lúc nữa cho chắc.
Dialogue: 0,0:10:38.92,0:10:41.09,[Sub_Phụ],,0000,0000,0000,,Okajima-san...
Dialogue: 0,0:10:41.09,0:10:42.09,[Sub_Phụ],,0000,0000,0000,,Sao anh lại đến đây?
Dialogue: 0,0:10:46.46,0:10:48.42,[Black_Lagoon],,0000,0000,0000,,Vì anh không thể làm ngơ...
Dialogue: 0,0:10:49.46,0:10:51.10,[Black_Lagoon],,0000,0000,0000,,Trước việc em...
Dialogue: 0,0:10:51.46,0:10:54.16,[Black_Lagoon],,0000,0000,0000,,Bị lôi kéo tham gia vào sự vụ này chứ sao.
Dialogue: 0,0:10:55.17,0:10:55.92,[Sub_Phụ],,0000,0000,0000,,Vậy ạ...
Dialogue: 0,0:10:56.56,0:10:58.04,[Sub_Phụ],,0000,0000,0000,,Vậy là anh vẫn chưa biết.
Dialogue: 0,0:10:59.74,0:11:01.03,[Sub_Phụ],,0000,0000,0000,,Ừm...
Dialogue: 0,0:11:01.03,0:11:02.50,[Sub_Phụ],,0000,0000,0000,,Ra vậy. 
Dialogue: 0,0:11:02.50,0:11:04.87,[Sub_Phụ],,0000,0000,0000,,Vậy là anh nghĩ họ ép buộc em chứ gì.
Dialogue: 0,0:11:05.94,0:11:07.91,[Sub_Phụ],,0000,0000,0000,,Anh nhầm to rồi, Okajima-san.
Dialogue: 0,0:11:08.38,0:11:10.10,[Sub_Phụ],,0000,0000,0000,,Em...
Dialogue: 0,0:11:10.10,0:11:12.47,[Sub_Phụ],,0000,0000,0000,,Em mới chính là kẻ đầu sỏ trong việc này.
Dialogue: 0,0:11:13.12,0:11:15.22,[Sub_Phụ],,0000,0000,0000,,Vậy nên...
Dialogue: 0,0:11:15.22,0:11:17.05,[Sub_Phụ],,0000,0000,0000,,Anh đã là kẻ thù của em rồi.
Dialogue: 0,0:11:23.23,0:11:24.53,[Sub_Phụ],,0000,0000,0000,,Em nhắc lại lần nữa.
Dialogue: 0,0:11:25.23,0:11:26.78,[Sub_Phụ],,0000,0000,0000,,Anh đã là kẻ thù của em rồi.
Dialogue: 0,0:11:27.75,0:11:29.26,[Black_Lagoon],,0000,0000,0000,,Yukio-chan! Thế là sao?
Dialogue: 0,0:11:29.26,0:11:30.21,[Sub_Phụ],,0000,0000,0000,,Okajima-san...
Dialogue: 0,0:11:30.52,0:11:32.23,[Sub_Phụ],,0000,0000,0000,,Em...
Dialogue: 0,0:11:32.23,0:11:35.07,[Sub_Phụ],,0000,0000,0000,,Đã chính thức kế vị chức đầu lĩnh băng Washimine rồi.
Dialogue: 0,0:11:37.49,0:11:38.75,[Sub_Phụ],,0000,0000,0000,,Nói cách khác...
Dialogue: 0,0:11:38.75,0:11:40.33,[Sub_Phụ],,0000,0000,0000,,Lúc này em đã là...
Dialogue: 0,0:11:40.33,0:11:43.34,[Sub_Phụ],,0000,0000,0000,,Kẻ đứng đầu băng Washimine.
Dialogue: 0,0:11:44.16,0:11:45.80,[Sub_Phụ],,0000,0000,0000,,Và em...
Dialogue: 0,0:11:45.80,0:11:47.69,[Sub_Phụ],,0000,0000,0000,,Em không bị ai ép buộc cả.
Dialogue: 0,0:11:48.00,0:11:50.08,[Sub_Phụ],,0000,0000,0000,,Căn nguyên mọi chuyện đều do em.
Dialogue: 0,0:11:51.01,0:11:52.95,[Sub_Phụ],,0000,0000,0000,,Và anh lại là...
Dialogue: 0,0:11:52.95,0:11:54.07,[Sub_Phụ],,0000,0000,0000,,Kẻ thù của em.
Dialogue: 0,0:11:54.74,0:11:56.27,[Black_Lagoon],,0000,0000,0000,,Em...
Dialogue: 0,0:11:57.32,0:12:00.93,[Black_Lagoon],,0000,0000,0000,,Em biết thừa thế giới ngầm đó ra sao, mà vẫn dấn thân vào ư!?
Dialogue: 0,0:12:01.30,0:12:02.34,[Black_Lagoon],,0000,0000,0000,,Em đã thấy tận mắt rồi đó!?
Dialogue: 0,0:12:02.34,0:12:04.77,[Black_Lagoon],,0000,0000,0000,,Chì đầy một lũ táng tận lương tâm, đến một chút từ bi còn không có!
Dialogue: 0,0:12:04.77,0:12:08.43,[Black_Lagoon],,0000,0000,0000,,Ở đó chỉ có những kẻ sát nhân, lừa lọc bằng hữu mà thôi!
Dialogue: 0,0:12:35.15,0:12:36.13,[Sub_Phụ],,0000,0000,0000,,Okajima-san.
Dialogue: 0,0:12:36.58,0:12:37.85,[Sub_Phụ],,0000,0000,0000,,Em hỏi anh một lần nữa.
Dialogue: 0,0:12:38.42,0:12:40.51,[Sub_Phụ],,0000,0000,0000,,Tại sao anh lại đến nơi này?
Dialogue: 0,0:12:41.02,0:12:42.66,[Black_Lagoon],,0000,0000,0000,,Đã nói rồi đó thôi.
Dialogue: 0,0:12:43.42,0:12:45.98,[Black_Lagoon],,0000,0000,0000,,Anh không chịu được cảnh em bị lôi vào mớ hỗn độn này.
Dialogue: 0,0:12:46.56,0:12:47.74,[Sub_Phụ],,0000,0000,0000,,Không chịu được ư?
Dialogue: 0,0:12:48.89,0:12:52.60,[Sub_Phụ],,0000,0000,0000,,Vậy hẳn Bando-san không phải tự vẫn mà chết nhỉ.
Dialogue: 0,0:13:01.10,0:13:03.11,[Sub_Phụ],,0000,0000,0000,,Anh cũng thấy tận mắt nữa mà.
Dialogue: 0,0:13:04.51,0:13:06.55,[Sub_Phụ],,0000,0000,0000,,Thế lực của băng cứ suy yếu dần...
Dialogue: 0,0:13:06.55,0:13:08.17,[Sub_Phụ],,0000,0000,0000,,Còn tổng hội thì giương mắt làm ngơ.
Dialogue: 0,0:13:08.51,0:13:11.21,[Sub_Phụ],,0000,0000,0000,,Băng hiện tại phải chống chọi với bao hiểm họa to lớn.
Dialogue: 0,0:13:12.41,0:13:14.57,[Sub_Phụ],,0000,0000,0000,,Chợt anh nhận ra rằng chỉ có anh...
Dialogue: 0,0:13:15.15,0:13:16.97,[Sub_Phụ],,0000,0000,0000,,Mới có thể cứu vớt họ khỏi vận hạn ấy. Thì anh tính sao?
Dialogue: 0,0:13:20.33,0:13:22.29,[Sub_Phụ],,0000,0000,0000,,Việc nối lại mối bang giao...
Dialogue: 0,0:13:22.56,0:13:25.06,[Sub_Phụ],,0000,0000,0000,,Chỉ những người có huyết thống mới đủ sức gánh vác.
Dialogue: 0,0:13:25.73,0:13:27.37,[Sub_Phụ],,0000,0000,0000,,Đó là lẽ giang hồ.
Dialogue: 0,0:13:28.46,0:13:29.13,[Black_Lagoon],,0000,0000,0000,,Nhưng...
Dialogue: 0,0:13:29.30,0:13:30.97,[Sub_Phụ],,0000,0000,0000,,Anh đừng nói thêm gì nữa.
Dialogue: 0,0:13:31.67,0:13:34.14,[Sub_Phụ],,0000,0000,0000,,Truyền thống từ xưa có nói sao cũng thế thôi.
Dialogue: 0,0:13:34.54,0:13:35.37,[Sub_Phụ],,0000,0000,0000,,Nhưng...
Dialogue: 0,0:13:35.37,0:13:37.28,[Sub_Phụ],,0000,0000,0000,,Dù cho nó có quái gở thế nào chăng nữa...
Dialogue: 0,0:13:37.76,0:13:41.15,[Sub_Phụ],,0000,0000,0000,,Chúng tôi cũng chỉ có thể sống được bằng những lề thói đó thôi.
Dialogue: 0,0:13:41.96,0:13:43.34,[Sub_Phụ],,0000,0000,0000,,Nó là giới luật ai cũng phải tuân theo.
Dialogue: 0,0:13:44.62,0:13:46.13,[Black_Lagoon],,0000,0000,0000,,Thật quá điên rồ!
Dialogue: 0,0:13:46.70,0:13:49.39,[Black_Lagoon],,0000,0000,0000,,Vậy chứ đời em sau này thì sao?
Dialogue: 0,0:13:49.39,0:13:51.30,[Black_Lagoon],,0000,0000,0000,,Đâu ai muốn điều đó xảy ra chứ!
Dialogue: 0,0:13:51.59,0:13:52.41,[Black_Lagoon],,0000,0000,0000,,Bando-san...
Dialogue: 0,0:13:52.41,0:13:54.05,[Black_Lagoon],,0000,0000,0000,,Gin-san, thậm chí cả em nữa!
Dialogue: 0,0:13:52.41,0:13:54.05,[Black_Lagoon],,0000,0000,0000,,Gin-san... Thậm chí cả em nữa!
Dialogue: 0,0:13:54.43,0:13:58.22,[Black_Lagoon],,0000,0000,0000,,Mọi người ai cũng xả thân mình để \Ngiữ em tránh xa khỏi cuộc chiến này mà?
Dialogue: 0,0:13:58.60,0:14:00.61,[Black_Lagoon],,0000,0000,0000,,Để chắc rằng em sẽ không phải sa vào nơi ấy!
Dialogue: 0,0:15:02.83,0:15:07.18,[Sub_Phụ],,0000,0000,0000,,Nếu em chịu can dự vào sớm hơn...
Dialogue: 0,0:15:07.92,0:15:09.88,[Sub_Phụ],,0000,0000,0000,,Thì đã chẳng có gì phải xảy ra cả.
Dialogue: 0,0:15:10.12,0:15:10.94,[Black_Lagoon],,0000,0000,0000,,Không!
Dialogue: 0,0:15:10.94,0:15:12.40,[Black_Lagoon],,0000,0000,0000,,Tất cả đều là lỗi ở băng Kousa mà!
Dialogue: 0,0:15:14.77,0:15:16.19,[Black_Lagoon],,0000,0000,0000,,Họ...
Dialogue: 0,0:15:16.19,0:15:18.88,[Black_Lagoon],,0000,0000,0000,,Chính họ khiến em phải miễn cưỡng gánh hết khó khăn về mình.
Dialogue: 0,0:15:19.38,0:15:21.38,[Black_Lagoon],,0000,0000,0000,,Trong mắt anh nó chỉ có thế.
Dialogue: 0,0:15:22.25,0:15:25.38,[Sub_Phụ],,0000,0000,0000,,Anh còn nhớ lúc hai ta trò chuyện ở quán cafe chứ?
Dialogue: 0,0:15:27.02,0:15:29.36,[Sub_Phụ],,0000,0000,0000,,Đời người tựa như hạt xúc xắc.
Dialogue: 0,0:15:31.22,0:15:35.19,[Sub_Phụ],,0000,0000,0000,,{\i1}Có một người Pháp từng nói đời người tựa như con xúc xắc vậy.{\i0}
Dialogue: 0,0:15:35.19,0:15:38.32,[Sub_Phụ],,0000,0000,0000,,{\i1}Anh tự ném mình lăn đi giữa muôn vàn lựa chọn cho đời mình.{\i0}
Dialogue: 0,0:15:39.90,0:15:42.25,[Sub_Phụ],,0000,0000,0000,,Chả ai ép em cả...
Dialogue: 0,0:15:42.25,0:15:43.61,[Sub_Phụ],,0000,0000,0000,,Là em tự chọn lấy nó.
Dialogue: 0,0:15:44.05,0:15:47.55,[Sub_Phụ],,0000,0000,0000,,Lựa chọn sống vì cha và bao anh em huynh đệ đã theo ông.
Dialogue: 0,0:15:47.78,0:15:48.78,[Black_Lagoon],,0000,0000,0000,,Không đúng!
Dialogue: 0,0:15:48.78,0:15:50.70,[Black_Lagoon],,0000,0000,0000,,Từ đầu đã chẳng có lựa chọn nào cả!
Dialogue: 0,0:15:51.24,0:15:52.83,[Black_Lagoon],,0000,0000,0000,,Cứ nhìn nhận sai lệch như thế...
Dialogue: 0,0:15:52.83,0:15:56.13,[Black_Lagoon],,0000,0000,0000,,Thì em sẽ đón nhận của một tương lai\N u ám mà mình không đáng phải nhận đấy!
Dialogue: 0,0:15:58.25,0:16:00.91,[Sub_Phụ],,0000,0000,0000,,Anh đang ở trong khoảng chạng vạng.
Dialogue: 0,0:16:00.91,0:16:01.68,[Black_Lagoon],,0000,0000,0000,,Sao?
Dialogue: 0,0:16:01.74,0:16:06.72,[Sub_Phụ],,0000,0000,0000,,Chính bởi anh ở trong khoảng không chạng vạng \Nđó nên mới có thể thốt lên những lời như thế!
Dialogue: 0,0:16:07.20,0:16:09.17,[Sub_Phụ],,0000,0000,0000,,Em bị ép uổng vậy cớ gì em lại ở đây!
Dialogue: 0,0:16:09.36,0:16:11.71,[Sub_Phụ],,0000,0000,0000,,Nếu em không có lòng tin thử hỏi em lấy quyết tâm ở đâu!
Dialogue: 0,0:16:12.06,0:16:13.20,[Sub_Phụ],,0000,0000,0000,,Nếu tính mạng họ...
Dialogue: 0,0:16:13.20,0:16:16.03,[Sub_Phụ],,0000,0000,0000,,Danh dự rồi cả tương lai họ đều nằm trong tay em...
Dialogue: 0,0:16:16.57,0:16:19.66,[Sub_Phụ],,0000,0000,0000,,Vậy ngoài cách đấu tranh vì họ thì còn cách gì nữa đây!?
Dialogue: 0,0:16:20.71,0:16:22.18,[Sub_Phụ],,0000,0000,0000,,Hệt như màn đêm!
Dialogue: 0,0:16:22.18,0:16:24.37,[Sub_Phụ],,0000,0000,0000,,Nếu ta không tin vào lựa chọn của mình...
Dialogue: 0,0:16:24.37,0:16:25.71,[Sub_Phụ],,0000,0000,0000,,Thì lấy gì để dấn bước tiếp đây!
Dialogue: 0,0:16:29.55,0:16:30.59,[Black_Lagoon],,0000,0000,0000,,Revy.
Dialogue: 0,0:16:31.51,0:16:33.93,[Black_Lagoon],,0000,0000,0000,,{\i1}Mà, đức tin của tôi...{\i0}
Dialogue: 0,0:16:33.93,0:16:37.44,[Black_Lagoon],,0000,0000,0000,,{\i1}Sụp đổ đúng ngày lũ cớm ập đến bắt tôi vì cái tội mà tôi không làm.{\i0}
Dialogue: 0,0:16:38.42,0:16:42.38,[Black_Lagoon],,0000,0000,0000,,{\i1}Thế nên lần sau mà thuyết giáo mấy cái của nợ đó nữa..{\i0}
Dialogue: 0,0:16:42.38,0:16:44.02,[Black_Lagoon],,0000,0000,0000,,{\i1}Mời tự khăn gói đi đi.{\i0}
Dialogue: 0,0:16:45.36,0:16:46.58,[Black_Lagoon],,0000,0000,0000,,{\i1}Từ đó đến giờ...
Dialogue: 0,0:16:46.58,0:16:47.77,[Black_Lagoon],,0000,0000,0000,,{\i1}Vẫn chẳng có gì thay đổi.{\i0}
Dialogue: 0,0:16:49.07,0:16:49.73,[Black_Lagoon],,0000,0000,0000,,{\i1}Revy.{\i0}
Dialogue: 0,0:16:51.24,0:16:55.05,[Black_Lagoon],,0000,0000,0000,,{\i1}Chính từ những trải nghiệm{\i0}\N{\i1}tăm tối đó nên cô ấy hiểu rằng...{\i0}
Dialogue: 0,0:16:56.01,0:16:57.50,[Black_Lagoon],,0000,0000,0000,,{\i1}Tôi hoàn toàn là kẻ vô dụng.{\i0}
Dialogue: 0,0:16:59.01,0:17:02.01,[Black_Lagoon],,0000,0000,0000,,{\i1}Thậm chí chẳng thể thốt lên được lời nào với cô bé...{\i0}
Dialogue: 0,0:17:02.88,0:17:04.66,[Black_Lagoon],,0000,0000,0000,,{\i1}Khốn khổ như cô ngồi trước mặt tôi đây.{\i0}
Dialogue: 0,0:17:06.45,0:17:07.23,[Black_Lagoon],,0000,0000,0000,,{\i1}Tôi...{\i0}
Dialogue: 0,0:17:08.42,0:17:09.56,[Black_Lagoon],,0000,0000,0000,,{\i1}Tôi...
Dialogue: 0,0:17:09.56,0:17:11.91,[Black_Lagoon],,0000,0000,0000,,{\i1}Tôi đứng độc riêng ra.
Dialogue: 0,0:17:11.91,0:17:13.59,[Black_Lagoon],,0000,0000,0000,,{\i1}Chả theo ai cả.{\i0}
Dialogue: 0,0:17:14.06,0:17:15.28,[Black_Lagoon],,0000,0000,0000,,{\i1}Đều dối trá.
Dialogue: 0,0:17:15.28,0:17:17.93,[Black_Lagoon],,0000,0000,0000,,{\i1}Thực sự tôi chả đứng ở nơi đâu cả!{\i0}
Dialogue: 0,0:17:20.70,0:17:21.64,[Sub_Phụ],,0000,0000,0000,,Thằng chó!
Dialogue: 0,0:17:26.79,0:17:28.93,[Sub_Phụ],,0000,0000,0000,,Khốn kiếp! Tao... sẽ...
Dialogue: 0,0:17:30.11,0:17:33.33,[Sub_Phụ],,0000,0000,0000,,Để mày chết thế này hẵng còn nhẹ lắm...
Dialogue: 0,0:17:33.60,0:17:35.14,[Sub_Phụ],,0000,0000,0000,,Nhưng nghĩ lại thế cũng hợp lắm.
Dialogue: 0,0:17:39.15,0:17:44.48,[Sub_Phụ],,0000,0000,0000,,Em đã quyết định rằng sẽ tự mình gánh lấy mọi thứ...
Dialogue: 0,0:17:45.19,0:17:50.32,[Sub_Phụ],,0000,0000,0000,,Chỉ cần Gin-san và mọi người đều bình an là tốt lắm rồi.
Dialogue: 0,0:17:50.32,0:17:52.50,[Black_Lagoon],,0000,0000,0000,,Y-Y-Yukio-chan, em ...
Dialogue: 0,0:17:52.50,0:17:53.52,[Sub_Phụ],,0000,0000,0000,,Okajima-san...
Dialogue: 0,0:17:53.52,0:17:54.55,[Sub_Phụ],,0000,0000,0000,,Anh nói thử xem.
Dialogue: 0,0:17:55.19,0:17:57.53,[Sub_Phụ],,0000,0000,0000,,Lí do gì anh vẫn trụ lại được thế?
Dialogue: 0,0:17:58.94,0:18:01.11,[Sub_Phụ],,0000,0000,0000,,Nói thực là...
Dialogue: 0,0:18:01.11,0:18:03.99,[Sub_Phụ],,0000,0000,0000,,Em không hiểu một chút gì ở những gì anh nói ở quán cafe hôm nọ.
Dialogue: 0,0:18:04.98,0:18:07.03,[Sub_Phụ],,0000,0000,0000,,Nhưng em có thể nói gọn rằng.
Dialogue: 0,0:18:07.48,0:18:08.62,[Sub_Phụ],,0000,0000,0000,,Cái lí do...
Dialogue: 0,0:18:08.62,0:18:14.11,[Sub_Phụ],,0000,0000,0000,,Mà anh chôn mình ở cái chốn Đông Nam Á đầy hỗn mang đó chỉ có thể vì...
Dialogue: 0,0:18:14.11,0:18:17.17,[Sub_Phụ],,0000,0000,0000,,Anh đang kiếm tìm 1 thứ mà ở cái nước Nhật nhàm chán này không thể có.
Dialogue: 0,0:18:17.23,0:18:20.04,[Sub_Phụ],,0000,0000,0000,,Nhưng đến tận bây giờ, trong anh vẫn còn đầy ắp những phân vân.
Dialogue: 0,0:18:21.35,0:18:24.07,[Sub_Phụ],,0000,0000,0000,,Anh không về với cuộc đời ngập tràn ánh nắng của mình đã chớ...
Dialogue: 0,0:18:24.07,0:18:26.82,[Sub_Phụ],,0000,0000,0000,,Đến cả việc lấn sâu vào màn đêm u tối anh cũng chẳng dám làm.
Dialogue: 0,0:18:27.60,0:18:30.74,[Sub_Phụ],,0000,0000,0000,,Anh chỉ hững hờ nơi ranh giới của hai nơi đó.
Dialogue: 0,0:18:31.54,0:18:32.58,[Black_Lagoon],,0000,0000,0000,,K-Không...
Dialogue: 0,0:18:32.58,0:18:33.26,[Black_Lagoon],,0000,0000,0000,,Anh...
Dialogue: 0,0:18:33.34,0:18:34.80,[Sub_Phụ],,0000,0000,0000,,Trước đây anh có nói...
Dialogue: 0,0:18:34.80,0:18:36.24,[Sub_Phụ],,0000,0000,0000,,Anh muốn cứu tôi.
Dialogue: 0,0:18:37.06,0:18:38.68,[Sub_Phụ],,0000,0000,0000,,Vậy cứu tôi đi!
Dialogue: 0,0:18:38.68,0:18:40.00,[Sub_Phụ],,0000,0000,0000,,Cứu băng Washimine đi!
Dialogue: 0,0:18:40.00,0:18:41.01,[Sub_Phụ],,0000,0000,0000,,Cả Gin-san...
Dialogue: 0,0:18:41.01,0:18:42.37,[Sub_Phụ],,0000,0000,0000,,Rồi cả mọi người nữa kìa!
Dialogue: 0,0:18:44.85,0:18:46.68,[Sub_Phụ],,0000,0000,0000,,Làm sao mà được nhỉ.
Dialogue: 0,0:18:47.38,0:18:50.47,[Sub_Phụ],,0000,0000,0000,,Bởi vì anh có muốn cứu tôi đâu chứ.
Dialogue: 0,0:18:51.19,0:18:54.24,[Sub_Phụ],,0000,0000,0000,,Anh nào dám vứt bỏ đi cái thế giới đơn thường \Nmà anh tưởng chừng đã đánh mất đó đâu.
Dialogue: 0,0:18:54.24,0:18:55.99,[Sub_Phụ],,0000,0000,0000,,Đều là vì thế.
Dialogue: 0,0:18:56.49,0:18:58.89,[Sub_Phụ],,0000,0000,0000,,Nếu anh khoanh tay đứng nhìn tôi chết...
Dialogue: 0,0:18:58.89,0:19:02.73,[Sub_Phụ],,0000,0000,0000,,Đồng nghĩa anh chấp nhận xóa sổ đi \Nnhững hồi ức cuối cùng về Nhật trong anh.
Dialogue: 0,0:19:03.44,0:19:05.40,[Sub_Phụ],,0000,0000,0000,,Nhưng anh nào muốn mất đi thứ gì.
Dialogue: 0,0:19:05.69,0:19:07.80,[Sub_Phụ],,0000,0000,0000,,Vẫn thèm thuồng hướng về...
Dialogue: 0,0:19:07.80,0:19:10.22,[Sub_Phụ],,0000,0000,0000,,Những gì mình đã vứt bỏ trong quá khứ.
Dialogue: 0,0:19:11.07,0:19:13.95,[Sub_Phụ],,0000,0000,0000,,Cái ngữ như anh thì đòi bảo vệ được ai cơ chứ?
Dialogue: 0,0:19:14.59,0:19:17.74,[Sub_Phụ],,0000,0000,0000,,Cứu tinh là anh thì còn cứu được ai hả!?
Dialogue: 0,0:19:17.74,0:19:18.48,[Sub_Phụ],,0000,0000,0000,,Trả lời đi!
Dialogue: 0,0:19:18.74,0:19:20.62,[Sub_Phụ],,0000,0000,0000,,Nào! Trả lời đi chứ!!!
Dialogue: 0,0:19:25.72,0:19:28.22,[Sub_Phụ],,0000,0000,0000,,Tôi chỉ muốn một cuộc sống giản đơn.
Dialogue: 0,0:19:28.99,0:19:32.28,[Sub_Phụ],,0000,0000,0000,,Đáng ra tôi đã được sống như anh...
Dialogue: 0,0:19:32.28,0:19:34.03,[Sub_Phụ],,0000,0000,0000,,Hưởng một cuộc đời ấm êm không biết đau thương.
Dialogue: 0,0:19:35.42,0:19:36.50,[Black_Lagoon],,0000,0000,0000,,Yukio-chan...
Dialogue: 0,0:19:36.81,0:19:37.78,[Sub_Phụ],,0000,0000,0000,,Đừng lại gần tôi.
Dialogue: 0,0:19:39.50,0:19:40.67,[Sub_Phụ],,0000,0000,0000,,Tôi hiểu...
Dialogue: 0,0:19:41.73,0:19:43.02,[Sub_Phụ],,0000,0000,0000,,Nhưng tôi rối bời lắm rồi.
Dialogue: 0,0:19:43.74,0:19:45.88,[Sub_Phụ],,0000,0000,0000,,Biết là ghen tị với anh cũng thế mà thôi.
Dialogue: 0,0:19:47.69,0:19:49.16,[Sub_Phụ],,0000,0000,0000,,Chính bởi thế mà tôi...
Dialogue: 0,0:19:49.16,0:19:50.44,[Sub_Phụ],,0000,0000,0000,,Rất căm ghét anh.
Dialogue: 0,0:19:58.66,0:19:59.88,[Black_Lagoon],,0000,0000,0000,,Chờ tí coi.
Dialogue: 0,0:20:01.59,0:20:03.96,[Black_Lagoon],,0000,0000,0000,,Ông anh có ngón đòn khiếp thật đó.
Dialogue: 0,0:20:05.00,0:20:06.64,[Black_Lagoon],,0000,0000,0000,,Viên đạn đó, baby.
Dialogue: 0,0:20:06.64,0:20:07.93,[Black_Lagoon],,0000,0000,0000,,Cắt cả đạn cơ à.
Dialogue: 0,0:20:08.93,0:20:11.60,[Black_Lagoon],,0000,0000,0000,,Cảm phiền diễn lại cho đàn em xem cái nhỉ?
Dialogue: 0,0:20:11.93,0:20:13.19,[Black_Lagoon],,0000,0000,0000,,Nè. Làm ơn đi?
Dialogue: 0,0:20:16.68,0:20:18.10,[Sub_Phụ],,0000,0000,0000,,Đừng có mà bốc đồng.
Dialogue: 0,0:20:18.58,0:20:20.74,[Sub_Phụ],,0000,0000,0000,,Tôi mang ơn cô với cậu phiên dịch kia.
Dialogue: 0,0:20:21.32,0:20:23.53,[Sub_Phụ],,0000,0000,0000,,Nên đừng nên phí sức làm gì.
Dialogue: 0,0:20:24.30,0:20:25.64,[Sub_Phụ],,0000,0000,0000,,Giả chăng có gặp may...
Dialogue: 0,0:20:26.12,0:20:26.95,[Sub_Phụ],,0000,0000,0000,,Không...
Dialogue: 0,0:20:26.95,0:20:29.59,[Sub_Phụ],,0000,0000,0000,,Phải là không may, thì hai chúng ta chẳng còn cơ hội để phân cao thấp đâu.
Dialogue: 0,0:20:35.39,0:20:36.44,[Black_Lagoon],,0000,0000,0000,,Yukio-chan.
Dialogue: 0,0:20:39.86,0:20:42.63,[Sub_Phụ],,0000,0000,0000,,Cám ơn anh về chuyện tối qua.
Dialogue: 0,0:20:43.34,0:20:44.39,[Sub_Phụ],,0000,0000,0000,,Nhưng tôi mong là...
Dialogue: 0,0:20:44.90,0:20:47.45,[Sub_Phụ],,0000,0000,0000,,Mong là chúng ta sẽ không phải gặp lại nhau nữa.
Dialogue: 0,0:20:51.51,0:20:54.19,[Sub_Phụ],,0000,0000,0000,,Đến giờ mà Rock vẫn chưa về phòng.
Dialogue: 0,0:20:54.67,0:20:57.00,[Sub_Phụ],,0000,0000,0000,,Thiệt cậu ta còn tung tẩy ở đâu vậy chứ?
Dialogue: 0,0:20:57.38,0:20:58.35,[Balalaika],,0000,0000,0000,,Kệ đi...
Dialogue: 0,0:20:58.35,0:21:00.30,[Balalaika],,0000,0000,0000,,Dù gì cũng chưa có việc gì cần đến cậu ta mà.
Dialogue: 0,0:21:01.19,0:21:03.08,[Balalaika],,0000,0000,0000,,Đợt tổng công kích Hội Washimine...
Dialogue: 0,0:21:03.08,0:21:05.01,[Balalaika],,0000,0000,0000,,Chính thức bắt đầu lúc 7 giờ 50.
Dialogue: 0,0:21:05.62,0:21:09.13,[Balalaika],,0000,0000,0000,,Chia làm hai toán quân đột kích tiêu diệt trụ sở chính...
Dialogue: 0,0:21:09.13,0:21:11.52,[Balalaika],,0000,0000,0000,,Của địch đồng thời truy quét nơi chúng ẩn nấp.
Dialogue: 0,0:21:11.90,0:21:14.86,[Sub_Phụ],,0000,0000,0000,,Đội Tiến công đã xuất phát được lúc rồi ạ.
Dialogue: 0,0:21:15.11,0:21:19.15,[Balalaika],,0000,0000,0000,,Ta sẽ càn quét quân lực băng Washimine\Nthật nhanh chóng và triệt để.
Dialogue: 0,0:21:20.54,0:21:23.02,[Balalaika],,0000,0000,0000,,Dạy cho lũ Nhật đó biết thế nào là...
Dialogue: 0,0:21:23.02,0:21:25.09,[Balalaika],,0000,0000,0000,,Lề lối chiến trường.
