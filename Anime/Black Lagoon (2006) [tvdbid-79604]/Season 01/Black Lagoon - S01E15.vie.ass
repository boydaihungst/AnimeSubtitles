Dialogue: 0,0:01:32.05,0:01:33.65,[Assassin],,0000,0000,0000,,150 ngàn...
Dialogue: 0,0:01:33.65,0:01:34.49,[Assassin],,0000,0000,0000,,Vẫn không đủ ạ?
Dialogue: 0,0:01:34.72,0:01:35.84,[Black_Lagoon],,0000,0000,0000,,Kệ mẹ nó!
Dialogue: 0,0:01:35.84,0:01:39.56,[Black_Lagoon],,0000,0000,0000,,Bắn nát nó  xong xuôi hết nhớ nhặt cho bằng sạch tiền rơi dưới đất đấy, Eda!
Dialogue: 0,0:01:39.70,0:01:40.20,[Neutralist],,0000,0000,0000,,Ơh!
Dialogue: 0,0:01:40.20,0:01:40.51,[Neutralist],,0000,0000,0000,,Ờ!
Dialogue: 0,0:01:40.51,0:01:42.35,[Neutralist],,0000,0000,0000,,Đứng nguyên ở đấy!
Dialogue: 0,0:01:42.53,0:01:43.68,[Assassin],,0000,0000,0000,,Thỏa thuận...
Dialogue: 0,0:01:43.68,0:01:44.75,[Assassin],,0000,0000,0000,,Bất thành.
Dialogue: 0,0:01:53.64,0:01:54.49,[Neutralist],,0000,0000,0000,,Bố khỉ!
Dialogue: 0,0:01:54.49,0:01:55.47,[Sub_Phụ],,0000,0000,0000,,Chúng kia rồi!
Dialogue: 0,0:01:59.01,0:02:00.27,[Sub_Phụ],,0000,0000,0000,,Jodorowsky đây ạ!
Dialogue: 0,0:02:00.27,0:02:02.11,[Sub_Phụ],,0000,0000,0000,,Giao chiến với ở Point Pskov!
Dialogue: 0,0:02:03.08,0:02:03.84,[Balalaika],,0000,0000,0000,,Rõ rồi.
Dialogue: 0,0:02:04.25,0:02:05.51,[Neutralist],,0000,0000,0000,,Đệt mẹ chúng mày!
Dialogue: 0,0:02:05.58,0:02:06.55,[Black_Lagoon],,0000,0000,0000,,Dừng lại, Eda!
Dialogue: 0,0:02:06.55,0:02:08.11,[Black_Lagoon],,0000,0000,0000,,Là Hotel Moscow đấy!
Dialogue: 0,0:02:08.19,0:02:09.25,[Assassin],,0000,0000,0000,,Chúng ra rồi kìa, chị hai.
Dialogue: 0,0:02:09.25,0:02:10.52,[Assassin],,0000,0000,0000,,Là mấy bác người Nga đó!
Dialogue: 0,0:02:10.59,0:02:11.42,[Assassin],,0000,0000,0000,,Vâng!
Dialogue: 0,0:02:11.86,0:02:13.06,[Assassin],,0000,0000,0000,,Nè chị hai...
Dialogue: 0,0:02:13.39,0:02:15.93,[Assassin],,0000,0000,0000,,Ta đánh lừa mấy chú Nga đó đi.
Dialogue: 0,0:02:15.93,0:02:19.13,[Assassin],,0000,0000,0000,,Họ nả súng một hồi,\Nkiểu gì rồi cũng quay lại cứ điểm thôi.
Dialogue: 0,0:02:19.37,0:02:21.13,[Assassin],,0000,0000,0000,,Em hiểu rồi, anh hai.
Dialogue: 0,0:02:21.13,0:02:23.66,[Assassin],,0000,0000,0000,,Vậy chúng mình tách ra rồi bao vây bọn họ nhé!
Dialogue: 0,0:02:25.24,0:02:26.89,[Assassin],,0000,0000,0000,,Phải thành công đó, chị hai.
Dialogue: 0,0:02:26.89,0:02:28.27,[Assassin],,0000,0000,0000,,Vâng. anh hai.
Dialogue: 0,0:02:28.57,0:02:29.67,[Assassin],,0000,0000,0000,,Em yêu chị.
Dialogue: 0,0:02:29.67,0:02:30.59,[Assassin],,0000,0000,0000,,Ừhm...
Dialogue: 0,0:02:30.60,0:02:31.63,[Assassin],,0000,0000,0000,,Em cũng yêu anh.
Dialogue: 0,0:02:40.29,0:02:42.81,[Sub_Phụ],,0000,0000,0000,,Đã lạc mất mục tiêu trong lúc giao chiến.
Dialogue: 0,0:02:42.89,0:02:46.33,[Balalaika],,0000,0000,0000,,Đã thế địch còn nhận diên được quân ta nữa.
Dialogue: 0,0:02:46.33,0:02:49.16,[Balalaika],,0000,0000,0000,,Lệnh cho một tốp tiến lên để nhử địch vào tròng đi.
Dialogue: 0,0:02:49.16,0:02:49.82,[Sub_Phụ],,0000,0000,0000,,Vâng.
Dialogue: 0,0:02:50.11,0:02:51.64,[Sub_Phụ],,0000,0000,0000,,Các đội, tiến hành theo kế hoạch.
Dialogue: 0,0:02:52.90,0:02:56.53,[Sub_Phụ],,0000,0000,0000,,{\i1}Tổ Lavochek và Tổ Lobosfski,{\i0}\N{\i1}đã hoàn tất bước 2 phần chuẩn bị...{\i0}
Dialogue: 0,0:02:56.53,0:02:58.11,[Sub_Phụ],,0000,0000,0000,,{\i1}Hiện đang tiến về điểm tập kết.{\i0}
Dialogue: 0,0:03:08.46,0:03:11.33,[Sub_Phụ],,0000,0000,0000,,{\i1}Đã xác định được Mục tiêu số 2{\i0}\N{\i1}đang bám theo sau Jodorowsky khi đang rút lui.{\i0}
Dialogue: 0,0:03:11.78,0:03:13.68,[Balalaika],,0000,0000,0000,,Xác nhận lại số lượng địch quân.
Dialogue: 0,0:03:13.68,0:03:14.25,[Balalaika],,0000,0000,0000,,Nhanh!
Dialogue: 0,0:03:14.75,0:03:16.85,[Sub_Phụ],,0000,0000,0000,,Baronin gọi Okchabriagin....
Dialogue: 0,0:03:16.85,0:03:18.62,[Sub_Phụ],,0000,0000,0000,,Hiện chỉ thấy được mình Mục tiêu 2.
Dialogue: 0,0:03:18.62,0:03:19.32,[Sub_Phụ],,0000,0000,0000,,Nhắc lại...
Dialogue: 0,0:03:19.32,0:03:20.62,[Sub_Phụ],,0000,0000,0000,,{\i1}Chỉ mỗi Mục tiêu số 2.{\i0}
Dialogue: 0,0:03:20.62,0:03:22.22,[Sub_Phụ],,0000,0000,0000,,Đây là binh nhì Eugene here.
Dialogue: 0,0:03:22.22,0:03:24.39,[Sub_Phụ],,0000,0000,0000,,Tôi đang xác định vị trí của mục tiêu bám theo Jodorowsky.
Dialogue: 0,0:03:24.39,0:03:26.03,[Sub_Phụ],,0000,0000,0000,,Chúng tôi cũng chỉ xác định được một cá nhân bám theo.
Dialogue: 0,0:03:26.27,0:03:29.33,[Sub_Phụ],,0000,0000,0000,,{\i1}Mục tiêu số 2 vẫn đang bám ngay sát sau tổ Jodorowsky.{\i0}
Dialogue: 0,0:03:29.89,0:03:31.84,[Sub_Phụ],,0000,0000,0000,,Tôi sẽ dụ nó vào điểm đã định sẵn.
Dialogue: 0,0:03:32.14,0:03:34.45,[Balalaika],,0000,0000,0000,,Vậy là chỉ mỗi Mục tiêu số 2 cắn câu à?
Dialogue: 0,0:03:34.45,0:03:35.23,[Sub_Phụ],,0000,0000,0000,,{\i1}Thưa vâng.{\i0}
Dialogue: 0,0:03:35.67,0:03:36.76,[Balalaika],,0000,0000,0000,,Cũng tốt.
Dialogue: 0,0:03:36.76,0:03:38.27,[Balalaika],,0000,0000,0000,,Vậy đảm bảo không mắc sai sót nào khi dồn mục tiêu đấy.
Dialogue: 0,0:03:38.61,0:03:39.99,[Balalaika],,0000,0000,0000,,{\i1}Đừng mạo hiểm manh động.{\i0}
Dialogue: 0,0:03:39.99,0:03:41.58,[Balalaika],,0000,0000,0000,,{\i1}Chúng ranh lắm đấy.{\i0}
Dialogue: 0,0:03:42.41,0:03:45.21,[Balalaika],,0000,0000,0000,,{\i1}Cứ vờ như chúng đang chiếm lợi thế ấy.{\i0}
Dialogue: 0,0:03:45.55,0:03:49.32,[Balalaika],,0000,0000,0000,,{\i1}Cứ như thế, đến bước tiếp theo{\i0}\N{\i1}chúng hết phương chống đỡ thôi{\i0}.
Dialogue: 0,0:03:50.66,0:03:52.79,[Sub_Phụ],,0000,0000,0000,,Tôi sẽ cử mấy đứa đàn em chơi theo kiểu mafia.
Dialogue: 0,0:03:53.26,0:03:54.63,[Sub_Phụ],,0000,0000,0000,,Chị khỏi lo...
Dialogue: 0,0:03:54.63,0:03:56.48,[Sub_Phụ],,0000,0000,0000,,Sắp đến đại sảnh công viên rồi...
Dialogue: 0,0:03:56.48,0:03:58.70,[Sub_Phụ],,0000,0000,0000,,Ta sẽ đi trước một bước.
Dialogue: 0,0:03:59.98,0:04:03.40,[Balalaika],,0000,0000,0000,,Tập trung quân lực gây xao nhãng và chọc giân mục tiêu.
Dialogue: 0,0:04:04.17,0:04:05.97,[Balalaika],,0000,0000,0000,,Giận dữ làm mờ lý trí của chúng.
Dialogue: 0,0:04:05.97,0:04:07.70,[Balalaika],,0000,0000,0000,,Đến lúc lật ngửa bài rồi.
Dialogue: 0,0:04:07.70,0:04:08.04,[Sub_Phụ],,0000,0000,0000,,{\i1}Đã rõ.{\i0}
Dialogue: 0,0:04:09.58,0:04:10.82,[Balalaika],,0000,0000,0000,,Trung sĩ, đến lúc rồi.
Dialogue: 0,0:04:11.54,0:04:13.05,[Balalaika],,0000,0000,0000,,Truyền lệnh đến tổ cuối cùng đi.
Dialogue: 0,0:04:13.05,0:04:13.82,[Sub_Phụ],,0000,0000,0000,,Vâng.
Dialogue: 0,0:04:16.98,0:04:18.41,[Sub_Phụ],,0000,0000,0000,,Vậỵ, Đội trưởng...
Dialogue: 0,0:04:18.41,0:04:19.18,[Sub_Phụ],,0000,0000,0000,,Chị bảo trọng nhé.
Dialogue: 0,0:04:19.52,0:04:20.32,[Balalaika],,0000,0000,0000,,Ờ.
Dialogue: 0,0:04:20.32,0:04:22.10,[Balalaika],,0000,0000,0000,,Cả cậu cũng giữ mình đấy.
Dialogue: 0,0:04:27.23,0:04:28.32,[Balalaika],,0000,0000,0000,,Giờ thì...
Dialogue: 0,0:04:29.55,0:04:32.36,[Balalaika],,0000,0000,0000,,Xem ra hồi tàn của...
Dialogue: 0,0:04:32.36,0:04:34.45,[Balalaika],,0000,0000,0000,,Cuộc vui đêm nay đã đến rồi.
Dialogue: 0,0:04:35.43,0:04:38.08,[Neutralist],,0000,0000,0000,,Thế đệt nào đi cho xa rồi về tay trắng là sao hả?
Dialogue: 0,0:04:38.70,0:04:41.24,[Neutralist],,0000,0000,0000,,Đã bảo hồi nãy đồng ý mẹ nó cho rồi!
Dialogue: 0,0:04:41.24,0:04:43.44,[Neutralist],,0000,0000,0000,,Hám của cho lắm vào!
Dialogue: 0,0:04:43.91,0:04:44.93,[Black_Lagoon],,0000,0000,0000,,Bố khỉ!
Dialogue: 0,0:04:45.58,0:04:49.86,[Black_Lagoon],,0000,0000,0000,,Thế nói xem lúc nãy con nào cứu mụ \Nkhỏi bị lũ Hotel Moscow bắn nát bi nào!?
Dialogue: 0,0:04:49.86,0:04:50.65,[Black_Lagoon],,0000,0000,0000,,Hả!?
Dialogue: 0,0:04:50.65,0:04:52.98,[Neutralist],,0000,0000,0000,,Chị mày từ nhỏ đã đéo có bi rồi...
Dialogue: 0,0:04:52.98,0:04:54.39,[Neutralist],,0000,0000,0000,,Rõ chưa hả con khỉ cái! Ngu thế hả!
Dialogue: 0,0:04:55.75,0:04:58.31,[Black_Lagoon],,0000,0000,0000,,Trêu tức bà à, con đỹ!\NNhào vô kiếm ăn!
Dialogue: 0,0:04:58.39,0:04:59.76,[Neutralist],,0000,0000,0000,,Thích thì chiều, Revy!
Dialogue: 0,0:04:59.76,0:05:02.75,[Neutralist],,0000,0000,0000,,Chắc để chị đây đục mấy lỗ ở đít thì cô em mới vui lên nhỉ!
Dialogue: 0,0:05:10.40,0:05:12.01,[Black_Lagoon],,0000,0000,0000,,Nói thiệt nha...
Dialogue: 0,0:05:12.01,0:05:13.80,[Black_Lagoon],,0000,0000,0000,,Đây ngán đến tận cổ rồi.
Dialogue: 0,0:05:14.87,0:05:16.70,[Neutralist],,0000,0000,0000,,Đến một xu lẻ còn chẳng có.
Dialogue: 0,0:05:17.74,0:05:19.81,[Black_Lagoon],,0000,0000,0000,,Tôi lượn về văn phòng đây.
Dialogue: 0,0:05:19.81,0:05:21.41,[Black_Lagoon],,0000,0000,0000,,Có gì thì hú nhé.
Dialogue: 0,0:05:22.21,0:05:23.35,[Neutralist],,0000,0000,0000,,Ớ, này!
Dialogue: 0,0:05:23.35,0:05:23.97,[Neutralist],,0000,0000,0000,,Còn đây thì sao!?
Dialogue: 0,0:05:25.18,0:05:26.32,[Black_Lagoon],,0000,0000,0000,,Sao là sao?
Dialogue: 0,0:05:26.32,0:05:27.45,[Neutralist],,0000,0000,0000,,Thì đó!?
Dialogue: 0,0:05:27.52,0:05:31.08,[Neutralist],,0000,0000,0000,,Bom bay đạn nổ thế này mà để thân gái một mình đi lấy xe à!
Dialogue: 0,0:05:31.16,0:05:33.99,[Neutralist],,0000,0000,0000,,Đi cùng đi, Revy!\NChị em tốt cơ mà?
Dialogue: 0,0:05:34.43,0:05:38.02,[Black_Lagoon],,0000,0000,0000,,Có chân thì tự mà đi.\NTo đầu thế còn gì.
Dialogue: 0,0:05:38.33,0:05:38.82,[Neutralist],,0000,0000,0000,,Hả...
Dialogue: 0,0:05:40.43,0:05:42.76,[Neutralist],,0000,0000,0000,,Ăn ở vô tình thế à!?
Dialogue: 0,0:05:47.34,0:05:48.04,[Assassin],,0000,0000,0000,,Hi~
Dialogue: 0,0:05:48.04,0:05:48.97,[Assassin],,0000,0000,0000,,Chị gái.
Dialogue: 0,0:05:50.68,0:05:52.20,[Neutralist],,0000,0000,0000,,Mày đứng đó từ lúc nào thế?
Dialogue: 0,0:05:52.98,0:05:55.31,[Assassin],,0000,0000,0000,,Thì em chờ đến lúc chị còn một mình mà.
Dialogue: 0,0:05:55.38,0:05:58.18,[Assassin],,0000,0000,0000,,Em chả dại mà xông bừa vào đấu với cả 2 chị đâu.
Dialogue: 0,0:06:00.79,0:06:04.48,[Assassin],,0000,0000,0000,,Em có chuyện muốn nhờ chị giúp đây.
Dialogue: 0,0:06:05.49,0:06:09.60,[Assassin],,0000,0000,0000,,Chờ đến anh em giết được bà cô người Nga đó là bọn em tự do rồi.
Dialogue: 0,0:06:10.60,0:06:14.09,[Assassin],,0000,0000,0000,,Nhưng bọn em lại lỡ giết Verocchio kẻ đầu sỏ của vụ này nữa.
Dialogue: 0,0:06:14.17,0:06:15.19,[Neutralist],,0000,0000,0000,,Đồ điên.
Dialogue: 0,0:06:15.19,0:06:17.66,[Neutralist],,0000,0000,0000,,Mày biết vậy mà vẫn tự hủy đi lá chắn cho bản thân à?
Dialogue: 0,0:06:18.47,0:06:21.13,[Neutralist],,0000,0000,0000,,Với lại, mày cũng đâu việc gì phải giết Balalaika chứ.
Dialogue: 0,0:06:21.21,0:06:22.17,[Neutralist],,0000,0000,0000,,Vậy mày muốn gì nữa?
Dialogue: 0,0:06:22.17,0:06:22.74,[Assassin],,0000,0000,0000,,Vì sao hả?
Dialogue: 0,0:06:29.18,0:06:30.23,[Assassin],,0000,0000,0000,,Sao á?
Dialogue: 0,0:06:30.23,0:06:31.47,[Assassin],,0000,0000,0000,,Vì sao á?
Dialogue: 0,0:06:31.47,0:06:34.08,[Assassin],,0000,0000,0000,,Chị hỏi một câu nực cười thật đấy!
Dialogue: 0,0:06:35.99,0:06:37.77,[Assassin],,0000,0000,0000,,Thì thích như thế.
Dialogue: 0,0:06:37.77,0:06:39.97,[Assassin],,0000,0000,0000,,Cần gì phải có lí do chứ.
Dialogue: 0,0:06:39.97,0:06:41.89,[Assassin],,0000,0000,0000,,Thích cái gì làm cái nấy.
Dialogue: 0,0:06:43.33,0:06:45.47,[Assassin],,0000,0000,0000,,Mà giờ nó cũng chẳng quan trọng nữa.
Dialogue: 0,0:06:46.01,0:06:48.43,[Assassin],,0000,0000,0000,,Vậy nói xem có cách nào để em thoát khỏi đây không vậy.
Dialogue: 0,0:06:48.50,0:06:51.26,[Assassin],,0000,0000,0000,,Phải là dân làm ăn đàng hoàng đó.
Dialogue: 0,0:06:51.26,0:06:53.12,[Assassin],,0000,0000,0000,,Nè! Nói đi chứ...
Dialogue: 0,0:06:53.13,0:06:54.00,[Assassin],,0000,0000,0000,,Bà chị.
Dialogue: 0,0:07:32.30,0:07:34.17,[Balalaika],,0000,0000,0000,,Khỏi phải chui lủi nữa.
Dialogue: 0,0:07:34.17,0:07:35.05,[Balalaika],,0000,0000,0000,,Ra đây đi.
Dialogue: 0,0:07:37.88,0:07:39.57,[Assassin],,0000,0000,0000,,Đoán được tôi ở đây cơ à.
Dialogue: 0,0:07:39.57,0:07:41.34,[Assassin],,0000,0000,0000,,Bà cô cũng đáng nể đấy.
Dialogue: 0,0:07:41.62,0:07:43.85,[Assassin],,0000,0000,0000,,Hèn gì lính của bà có nghề đến thế.
Dialogue: 0,0:07:44.06,0:07:45.87,[Assassin],,0000,0000,0000,,Tôi đuổi chúng chạy quanh...
Dialogue: 0,0:07:45.87,0:07:47.46,[Assassin],,0000,0000,0000,,Vậy mà không giết được một tên nào.
Dialogue: 0,0:07:48.26,0:07:49.09,[Assassin],,0000,0000,0000,,Vậy...
Dialogue: 0,0:07:49.09,0:07:50.73,[Assassin],,0000,0000,0000,,Giờ sao đây hả bà cô?
Dialogue: 0,0:07:51.26,0:07:53.89,[Assassin],,0000,0000,0000,,Sao ta không nhân cơ hội này tâm tình một tí nhỉ?
Dialogue: 0,0:07:54.27,0:07:55.78,[Assassin],,0000,0000,0000,,Hay là ta cùng nói về...
Dialogue: 0,0:07:55.78,0:07:58.24,[Assassin],,0000,0000,0000,,Ông anh bọn tôi giết nhỉ.
Dialogue: 0,0:07:59.94,0:08:02.41,[Assassin],,0000,0000,0000,,Nhiều tên ngỏm sớm lắm...
Dialogue: 0,0:08:02.41,0:08:04.37,[Assassin],,0000,0000,0000,,Nhưng ông anh đó sống dai khiếp luôn ấy.
Dialogue: 0,0:08:07.11,0:08:09.02,[Assassin],,0000,0000,0000,,Đến lúc cuối hãy còn la là...
Dialogue: 0,0:08:09.02,0:08:10.34,[Assassin],,0000,0000,0000,,"Đội trưởng!"
Dialogue: 0,0:08:10.34,0:08:11.48,[Assassin][00],,0000,0000,0000,,"Đội trưởng!"
Dialogue: 0,0:08:11.48,0:08:12.09,[Assassin],,0000,0000,0000,,Đó!
Dialogue: 0,0:08:12.46,0:08:15.71,[Assassin],,0000,0000,0000,,Máu tuôn ầm ầm mà vẫn hét mãi đó.
Dialogue: 0,0:08:16.55,0:08:17.66,[Balalaika],,0000,0000,0000,,Ưhm~~~
Dialogue: 0,0:08:17.66,0:08:18.63,[Balalaika],,0000,0000,0000,,Thế à.
Dialogue: 0,0:08:19.01,0:08:20.35,[Assassin],,0000,0000,0000,,Lạnh lùng quá đấy, bà cô ạ.
Dialogue: 0,0:08:21.03,0:08:22.00,[Assassin],,0000,0000,0000,,Nhưng mà nè?
Dialogue: 0,0:08:22.00,0:08:25.59,[Assassin],,0000,0000,0000,,Bà cũng sớm như ông anh đó thôi.
Dialogue: 0,0:08:26.43,0:08:28.86,[Assassin],,0000,0000,0000,,Đáng tiếc là bà chẳng có nhiều thời gian để hấp hối đâu.
Dialogue: 0,0:08:29.47,0:08:31.64,[Balalaika],,0000,0000,0000,,Đúng là phí thật đấy.
Dialogue: 0,0:08:31.64,0:08:34.29,[Balalaika],,0000,0000,0000,,Xin lỗi nhé, cậu nhỏ...
Dialogue: 0,0:08:34.29,0:08:36.61,[Balalaika],,0000,0000,0000,,Những phút cuối đời của cậu đã điểm rồi.
Dialogue: 0,0:08:37.88,0:08:39.47,[Balalaika],,0000,0000,0000,,Nhưng trước đó thì...
Dialogue: 0,0:08:39.48,0:08:42.38,[Balalaika],,0000,0000,0000,,Cũng lấy tiếc cho trò đùa ranh ma của cậu.
Dialogue: 0,0:08:42.90,0:08:43.67,[Balalaika],,0000,0000,0000,,Này, cậu nhỏ.
Dialogue: 0,0:08:44.78,0:08:47.25,[Balalaika],,0000,0000,0000,,Đầu tiên thì lo quỳ xuống mau đi.
Dialogue: 0,0:08:48.25,0:08:49.41,[Assassin],,0000,0000,0000,,Bà cũng vui tính ghê nhỉ.
Dialogue: 0,0:08:49.53,0:08:50.31,[Balalaika],,0000,0000,0000,,Quỳ xuống mau!
Dialogue: 0,0:09:12.08,0:09:14.24,[Balalaika],,0000,0000,0000,,Đó là kết cục đấy, cậu nhỏ.
Dialogue: 0,0:09:14.65,0:09:17.74,[Balalaika],,0000,0000,0000,,Dù có căng mắt ra suy luận thế nào đi nữa, mày cũng chẳng ngờ ...
Dialogue: 0,0:09:19.21,0:09:21.98,[Balalaika],,0000,0000,0000,,Mình đã đâm đầu vào bẫy đã giăng sẵn đâu.
Dialogue: 0,0:09:23.42,0:09:27.98,[Balalaika],,0000,0000,0000,,Mà chết ở đây thì cũng chẳng hơn gì...
Dialogue: 0,0:09:28.90,0:09:30.59,[Balalaika],,0000,0000,0000,,Một đứa nhóc vất vưởng lề đường đâu.
Dialogue: 0,0:09:35.44,0:09:36.84,[Assassin],,0000,0000,0000,,Thật nực cười...
Dialogue: 0,0:09:36.84,0:09:39.06,[Assassin],,0000,0000,0000,,Nói thế là sao chứ?
Dialogue: 0,0:09:39.06,0:09:40.61,[Assassin],,0000,0000,0000,,Tôi sẽ không chết.
Dialogue: 0,0:09:40.61,0:09:41.66,[Assassin],,0000,0000,0000,,Không bao giờ chết.
Dialogue: 0,0:09:42.17,0:09:45.43,[Assassin],,0000,0000,0000,,Là vì tôi đã giết không biết bao nhiêu người!
Dialogue: 0,0:09:45.43,0:09:46.25,[Assassin],,0000,0000,0000,,Nhiều...
Dialogue: 0,0:09:46.25,0:09:47.11,[Assassin],,0000,0000,0000,,Nhiều lắm...
Dialogue: 0,0:09:47.11,0:09:48.00,[Assassin],,0000,0000,0000,,Nhiều...
Dialogue: 0,0:09:48.00,0:09:48.92,[Assassin],,0000,0000,0000,,Nhiều lắm...
Dialogue: 0,0:09:48.92,0:09:52.21,[Assassin],,0000,0000,0000,,Nhờ thế mà bọn tôi mới sống sót...
Dialogue: 0,0:09:52.21,0:09:53.31,[Assassin],,0000,0000,0000,,Đến ngày hôm nay.
Dialogue: 0,0:09:53.72,0:09:56.15,[Assassin],,0000,0000,0000,,Chúng tôi... có thể bổ sung sinh mạng cho mình.
Dialogue: 0,0:09:56.22,0:09:58.02,[Assassin],,0000,0000,0000,,Chúng tôi sẽ không bao giờ chết.
Dialogue: 0,0:09:58.27,0:09:58.97,[Assassin],,0000,0000,0000,,Đúng.
Dialogue: 0,0:09:59.59,0:10:00.87,[Assassin],,0000,0000,0000,,Sống bất tử.
Dialogue: 0,0:10:01.73,0:10:03.98,[Balalaika],,0000,0000,0000,,Vậy ra đó là đức tin của mày à?
Dialogue: 0,0:10:03.98,0:10:05.82,[Balalaika],,0000,0000,0000,,Lối suy nghĩ hay ho thật đấy.
Dialogue: 0,0:10:07.66,0:10:08.40,[Balalaika],,0000,0000,0000,,Nhưng...
Dialogue: 0,0:10:08.40,0:10:10.65,[Balalaika],,0000,0000,0000,,Đáp án nó như lời một bài hát thế này...
Dialogue: 0,0:10:10.65,0:10:12.76,[Balalaika],,0000,0000,0000,,"No one lives forever".
Dialogue: 0,0:10:12.76,0:10:14.81,[Balalaika],,0000,0000,0000,,Mày đang có nó trong tay đấy.
Dialogue: 0,0:10:15.36,0:10:16.08,[Balalaika],,0000,0000,0000,,Giờ thì...
Dialogue: 0,0:10:16.68,0:10:19.83,[Balalaika],,0000,0000,0000,,Tao dư sức cho mày nếm mùi vị sống không được chết không xong là thế nào.
Dialogue: 0,0:10:20.48,0:10:24.61,[Balalaika],,0000,0000,0000,,Hay cùng lắm là cho mày chịu cái điều \Nmà mày đã làm với thuộc cấp của tao.
Dialogue: 0,0:10:25.05,0:10:29.89,[Balalaika],,0000,0000,0000,,Nhưng tiếc là tao không phải là giống vô nhân tính như mày.
Dialogue: 0,0:10:30.49,0:10:35.12,[Balalaika],,0000,0000,0000,,Thế nên tao chỉ ngồi đây ngắm nhìn cảnh mày về trời thôi.
Dialogue: 0,0:10:37.75,0:10:40.32,[Balalaika],,0000,0000,0000,,Với vết thương như thế,\Ngắng gượng được 10 phút là cùng.
Dialogue: 0,0:10:41.29,0:10:44.28,[Balalaika],,0000,0000,0000,,Phút hấp hối ngắn ngủi còn lại này coi như là tưởng nhớ đến...
Dialogue: 0,0:10:44.60,0:10:47.76,[Balalaika],,0000,0000,0000,,Vong linh của Saharov và Menshov vậy.
Dialogue: 0,0:10:50.91,0:10:52.01,[Balalaika],,0000,0000,0000,,Mà chắc là...
Dialogue: 0,0:10:52.01,0:10:55.11,[Balalaika],,0000,0000,0000,,Mày cũng chả hiểu nổi điều tao nói đâu.
Dialogue: 0,0:11:11.40,0:11:12.40,[Balalaika],,0000,0000,0000,,Nín đi...
Dialogue: 0,0:11:12.40,0:11:13.76,[Balalaika],,0000,0000,0000,,Thằng nhóc chó chết.
Dialogue: 0,0:11:20.74,0:11:21.47,[Sub_Phụ],,0000,0000,0000,,Đội trưởng?
Dialogue: 0,0:11:22.91,0:11:23.82,[Balalaika],,0000,0000,0000,,{\i1}Trung sĩ.{\i0}
Dialogue: 0,0:11:24.58,0:11:26.03,[Balalaika],,0000,0000,0000,,Hồi kết đã xong rồi.
Dialogue: 0,0:11:27.11,0:11:29.06,[Sub_Phụ],,0000,0000,0000,,Không tốt đâu, đội trưởng.
Dialogue: 0,0:11:29.06,0:11:30.84,[Sub_Phụ],,0000,0000,0000,,Chị làm tôi lo chết được.
Dialogue: 0,0:11:30.95,0:11:31.74,[Balalaika],,0000,0000,0000,,{\i1}Xin lỗi.{\i0}
Dialogue: 0,0:11:32.38,0:11:35.01,[Balalaika],,0000,0000,0000,,Lại bắt cậu cực nhọc vì thói ích kỉ của tôi.
Dialogue: 0,0:11:35.72,0:11:36.71,[Sub_Phụ],,0000,0000,0000,,{\i1}Đội trưởng.{\i0}
Dialogue: 0,0:11:36.79,0:11:38.62,[Balalaika],,0000,0000,0000,,Tôi già thật rồi.
Dialogue: 0,0:11:38.62,0:11:40.66,[Balalaika],,0000,0000,0000,,Cứ như...
Dialogue: 0,0:11:40.66,0:11:41.99,[Balalaika],,0000,0000,0000,,Cứ như cạn hết sức lực vậy.
Dialogue: 0,0:12:37.41,0:12:39.19,[Black_Lagoon],,0000,0000,0000,,Con bé hát hay quá nhỉ.
Dialogue: 0,0:12:39.19,0:12:40.95,[Black_Lagoon],,0000,0000,0000,,Ai mà tin đó là...
Dialogue: 0,0:12:40.95,0:12:42.51,[Black_Lagoon],,0000,0000,0000,,Giọng hát của một kẻ khát máu điên cuồng chứ.
Dialogue: 0,0:12:42.51,0:12:43.07,[Black_Lagoon],,0000,0000,0000,,Ưhm.
Dialogue: 0,0:12:43.62,0:12:46.03,[Black_Lagoon],,0000,0000,0000,,Nghe cứ như thiên thần ca ấy.
Dialogue: 0,0:12:49.28,0:12:52.26,[Black_Lagoon],,0000,0000,0000,,Nhưng nghĩ cũng thật tức cười.
Dialogue: 0,0:12:52.50,0:12:53.90,[Black_Lagoon],,0000,0000,0000,,Đúng thế thật.
Dialogue: 0,0:12:54.40,0:12:59.33,[Black_Lagoon],,0000,0000,0000,,Tên sát nhân khát máu bị lùng sục khắp\N Roanapur bây giờ lại là khách hàng của chúng ta.
Dialogue: 0,0:13:00.88,0:13:02.78,[Black_Lagoon],,0000,0000,0000,,Dào, sao cũng được. Khách hàng là Thượng đế mà.
Dialogue: 0,0:13:02.78,0:13:03.84,[Black_Lagoon],,0000,0000,0000,,Mà, Revy đâu?
Dialogue: 0,0:13:04.90,0:13:07.98,[Black_Lagoon],,0000,0000,0000,,Mới đầu, mợ hai đó khó chịu với con bé lắm...
Dialogue: 0,0:13:07.98,0:13:10.74,[Black_Lagoon],,0000,0000,0000,,Sau cũng chịu ngồi gác cửa buồng cabin...
Dialogue: 0,0:13:11.38,0:13:13.64,[Black_Lagoon],,0000,0000,0000,,Còn lại thì giao hết cho Rock.
Dialogue: 0,0:13:18.82,0:13:20.29,[Black_Lagoon],,0000,0000,0000,,Bài hát hay ghê.
Dialogue: 0,0:13:20.29,0:13:21.26,[Black_Lagoon],,0000,0000,0000,,Em học ở đâu thế?
Dialogue: 0,0:13:22.51,0:13:24.23,[Assassin],,0000,0000,0000,,Nghe trên TV đó anh.
Dialogue: 0,0:13:24.23,0:13:26.15,[Assassin],,0000,0000,0000,,Đây là bài mà em thích nhất đó.
Dialogue: 0,0:13:26.87,0:13:27.80,[Assassin],,0000,0000,0000,,Mà nè?
Dialogue: 0,0:13:27.80,0:13:30.49,[Assassin],,0000,0000,0000,,Ngoài anh em ra, anh là người đầu tiên...
Dialogue: 0,0:13:32.70,0:13:34.37,[Assassin],,0000,0000,0000,,Được em hát cho đấy.
Dialogue: 0,0:13:37.07,0:13:38.43,[Black_Lagoon],,0000,0000,0000,,Ơ-Ơh! Woay!
Dialogue: 0,0:13:38.58,0:13:41.20,[Assassin],,0000,0000,0000,,Anh chẳng giống những kẻ khác chút nào.
Dialogue: 0,0:13:42.01,0:13:43.46,[Assassin],,0000,0000,0000,,Anh cứ như là...
Dialogue: 0,0:13:43.46,0:13:45.24,[Assassin],,0000,0000,0000,,Rơi từ hành tinh khác xuống ấy.
Dialogue: 0,0:13:46.49,0:13:49.92,[Black_Lagoon],,0000,0000,0000,,Thì tại anh vẫn còn gà mờ lắm mà.
Dialogue: 0,0:13:50.27,0:13:52.18,[Assassin],,0000,0000,0000,,Anh đúng là người tốt.
Dialogue: 0,0:13:52.18,0:13:55.56,[Assassin],,0000,0000,0000,,Mắt nhìn người của em hơi bị tinh đó.
Dialogue: 0,0:13:59.01,0:13:59.82,[Black_Lagoon],,0000,0000,0000,,Tôi đây.
Dialogue: 0,0:13:59.82,0:14:00.80,[Black_Lagoon],,0000,0000,0000,,Balalaika à?
Dialogue: 0,0:14:02.76,0:14:04.79,[Balalaika],,0000,0000,0000,,{\i1}Chắc anh rõ lí do tôi gọi đến nhỉ.
Dialogue: 0,0:14:04.79,0:14:05.23,[Black_Lagoon],,0000,0000,0000,,Ờ.
Dialogue: 0,0:14:05.82,0:14:08.09,[Black_Lagoon],,0000,0000,0000,,{\i1}Tôi còn tưởng chị phải gọi sớm hơn kìa.{\i0}
Dialogue: 0,0:14:08.70,0:14:09.93,[Balalaika],,0000,0000,0000,,Ê, Dutch.
Dialogue: 0,0:14:09.93,0:14:12.69,[Balalaika],,0000,0000,0000,,Cậu hiểu rõ việc cậu đang làm không thế?
Dialogue: 0,0:14:12.81,0:14:13.57,[Black_Lagoon],,0000,0000,0000,,{\i1}Tất nhiên.{\i0}
Dialogue: 0,0:14:13.85,0:14:16.21,[Black_Lagoon],,0000,0000,0000,,Sẽ có thù lao phụ thêm cho trò bán mạng này mà.
Dialogue: 0,0:14:16.55,0:14:18.20,[Balalaika],,0000,0000,0000,,Không ơn huệ hay trắc ẩn gì sao?
Dialogue: 0,0:14:18.49,0:14:20.51,[Black_Lagoon],,0000,0000,0000,,Trông tôi giống dân làm từ thiện lắm à?
Dialogue: 0,0:14:20.51,0:14:21.41,[Balalaika],,0000,0000,0000,,{\i1}Hỏi thử thôi.{\i0}
Dialogue: 0,0:14:21.49,0:14:24.84,[Balalaika],,0000,0000,0000,,Để tôi còn biết hiện mình đang đứng ở vị thế nào.
Dialogue: 0,0:14:25.31,0:14:27.62,[Black_Lagoon],,0000,0000,0000,,Việc của ai người nấy làm thôi.
Dialogue: 0,0:14:27.62,0:14:29.75,[Black_Lagoon],,0000,0000,0000,,Phải thế không, Balalaika?
Dialogue: 0,0:14:30.00,0:14:31.61,[Black_Lagoon],,0000,0000,0000,,Dutch. Ta quay sang hướng Nam.
Dialogue: 0,0:14:31.46,0:14:32.81,[Balalaika],,0000,0000,0000,,{\i1}Đúng đó, Dutch à.{\i0}
Dialogue: 0,0:14:33.03,0:14:35.66,[Balalaika],,0000,0000,0000,,{\i1}Mà tôi cũng đi trước một bước rồi.{\i0}
Dialogue: 0,0:14:35.96,0:14:36.78,[Black_Lagoon],,0000,0000,0000,,Ờ.
Dialogue: 0,0:14:36.78,0:14:38.80,[Black_Lagoon],,0000,0000,0000,,Cũng vừa nhắm thấy vài tên dính đến lời bà chị đây.
Dialogue: 0,0:14:39.27,0:14:41.43,[Balalaika],,0000,0000,0000,,Không hối hận không hận thù.
Dialogue: 0,0:14:41.43,0:14:42.67,[Balalaika],,0000,0000,0000,,Chúc may mắn.
Dialogue: 0,0:14:42.67,0:14:43.57,[Black_Lagoon],,0000,0000,0000,,{\i1}Rõ rồi!
Dialogue: 0,0:14:43.57,0:14:44.73,[Black_Lagoon],,0000,0000,0000,,{\i1}Bà chị đội trưởng.{\i0}
Dialogue: 0,0:14:45.52,0:14:46.29,[Balalaika],,0000,0000,0000,,Trung sĩ này.
Dialogue: 0,0:14:46.29,0:14:46.69,[Sub_Phụ],,0000,0000,0000,,Vâng?
Dialogue: 0,0:14:47.36,0:14:50.02,[Balalaika],,0000,0000,0000,,Đem cho tôi Trouble list tập E-file.
Dialogue: 0,0:14:50.02,0:14:50.37,[Sub_Phụ],,0000,0000,0000,,E!?
Dialogue: 0,0:14:51.42,0:14:52.87,[Balalaika],,0000,0000,0000,,Kiếm phiếu bảo hiểm ấy mà.
Dialogue: 0,0:14:54.46,0:14:56.05,[Black_Lagoon],,0000,0000,0000,,Hải quân Việt Nam à?
Dialogue: 0,0:14:56.05,0:14:57.07,[Black_Lagoon],,0000,0000,0000,,Đúng thế.
Dialogue: 0,0:14:57.35,0:14:58.91,[Black_Lagoon],,0000,0000,0000,,Kinh thật...
Dialogue: 0,0:14:59.33,0:15:01.46,[Black_Lagoon],,0000,0000,0000,,Sức mạnh của Hotel Moscow...
Dialogue: 0,0:15:02.07,0:15:02.95,[Black_Lagoon],,0000,0000,0000,,Tính đánh với họ thật à?
Dialogue: 0,0:15:03.17,0:15:04.39,[Black_Lagoon],,0000,0000,0000,,Đừng có điên.
Dialogue: 0,0:15:04.49,0:15:06.09,[Black_Lagoon],,0000,0000,0000,,Tàu ngư lôi quèn...
Dialogue: 0,0:15:06.09,0:15:07.89,[Black_Lagoon],,0000,0000,0000,,Đọ đéo gì nổi tàu chiến tên lửa chứ.
Dialogue: 0,0:15:08.69,0:15:10.14,[Black_Lagoon],,0000,0000,0000,,Điên thật...
Dialogue: 0,0:15:10.14,0:15:12.39,[Black_Lagoon],,0000,0000,0000,,Coi như bỏ mấy đường qua đảo Hải Nam rồi.
Dialogue: 0,0:15:12.46,0:15:14.76,[Black_Lagoon],,0000,0000,0000,,Còn Brunei?\NChỗ Mary Lee thì sao.
Dialogue: 0,0:15:15.45,0:15:16.59,[Black_Lagoon],,0000,0000,0000,,Không được nốt.
Dialogue: 0,0:15:16.59,0:15:17.88,[Black_Lagoon],,0000,0000,0000,,Xa vãi hành ra.
Dialogue: 0,0:15:18.17,0:15:18.74,[Black_Lagoon],,0000,0000,0000,,Vậy...
Dialogue: 0,0:15:18.74,0:15:20.56,[Black_Lagoon],,0000,0000,0000,,Chỉ còn một cách phù hợp lúc này...
Dialogue: 0,0:15:20.56,0:15:22.52,[Black_Lagoon],,0000,0000,0000,,Là chỗ Elroy ở Pangkal Pinang thôi.
Dialogue: 0,0:15:22.96,0:15:24.68,[Black_Lagoon],,0000,0000,0000,,Big Horn Elroy á.
Dialogue: 0,0:15:25.20,0:15:26.62,[Black_Lagoon],,0000,0000,0000,,Okay, nhắm hướng đó đi.
Dialogue: 0,0:15:26.62,0:15:27.72,[Black_Lagoon],,0000,0000,0000,,Để tôi đi gọi cho lão.
Dialogue: 0,0:15:30.65,0:15:31.60,[Assassin],,0000,0000,0000,,Ngoài biển...
Dialogue: 0,0:15:31.60,0:15:35.97,[Assassin],,0000,0000,0000,,Thế mà một tí nước cũng không thấy.
Dialogue: 0,0:15:35.97,0:15:36.65,[Assassin],,0000,0000,0000,,Chán thế.
Dialogue: 0,0:15:37.04,0:15:38.16,[Black_Lagoon],,0000,0000,0000,,Xin lỗi em.
Dialogue: 0,0:15:38.41,0:15:39.16,[Assassin],,0000,0000,0000,,Không ạ.
Dialogue: 0,0:15:39.16,0:15:40.43,[Assassin],,0000,0000,0000,,Em cũng quen rồi.
Dialogue: 0,0:15:40.80,0:15:43.30,[Black_Lagoon],,0000,0000,0000,,Em... chưa thấy biển bao giờ à?
Dialogue: 0,0:15:44.22,0:15:46.33,[Assassin],,0000,0000,0000,,Hồi bọn em còn ở Sicily...
Dialogue: 0,0:15:46.33,0:15:48.57,[Assassin],,0000,0000,0000,,Cả hồi ở cô nhi viện nữa...
Dialogue: 0,0:15:48.57,0:15:51.81,[Assassin],,0000,0000,0000,,Bốn bề chỉ độc là tường xám xịt.
Dialogue: 0,0:15:52.59,0:15:55.36,[Assassin],,0000,0000,0000,,Quê em ở quanh vùng núi Carpathian.
Dialogue: 0,0:15:55.81,0:15:57.67,[Assassin],,0000,0000,0000,,Âm u lạnh lẽo lắm.
Dialogue: 0,0:15:57.99,0:15:59.47,[Black_Lagoon][00],,0000,0000,0000,,Nền độc tài ở đó...
Dialogue: 0,0:15:59.47,0:16:01.94,[Black_Lagoon][00],,0000,0000,0000,,Nghiêm cấm hành động nạo phá thai.
Dialogue: 0,0:16:02.65,0:16:06.19,[Black_Lagoon][00],,0000,0000,0000,,Nhằm bổ sung nhân lực phục vụ cho nền kinh tế kiệt quệ...
Dialogue: 0,0:16:06.19,0:16:09.01,[Black_Lagoon][00],,0000,0000,0000,,Nhưng việc nuôi con là quá khả năng với nhiều gia đình nghèo.
Dialogue: 0,0:16:09.66,0:16:13.35,[Black_Lagoon][00],,0000,0000,0000,,Một số lượng lớn trẻ em bị bỏ rơi được cô nhi viện nhận nuôi.
Dialogue: 0,0:16:13.35,0:16:15.96,[Black_Lagoon][00],,0000,0000,0000,,Nhiều đứa trẻ trở thành trợ thủ đắc lực của cánh cớm ngầm.
Dialogue: 0,0:16:16.78,0:16:18.66,[Black_Lagoon][00],,0000,0000,0000,,Độc tài bị ám sát...
Dialogue: 0,0:16:18.67,0:16:22.00,[Black_Lagoon][00],,0000,0000,0000,,Hệ quả là còn lại vô số trẻ em mồ côi không nơi nương tựa.
Dialogue: 0,0:16:22.29,0:16:26.57,[Assassin],,0000,0000,0000,,Rồi bọn em được chuyển về Sicily\N vẫn phải sống trong máu và bóng tối.
Dialogue: 0,0:16:26.57,0:16:30.71,[Assassin],,0000,0000,0000,,Bị đánh đến không cụ cựa nổi \Nvà không biết bao nhiêu đêm đi tè ra máu.
Dialogue: 0,0:16:32.11,0:16:34.74,[Assassin],,0000,0000,0000,,Anh trai và em luôn thắc mắc...
Dialogue: 0,0:16:34.74,0:16:39.05,[Assassin],,0000,0000,0000,,Vì sao Chúa Trời lại nhẫn tâm với bọn em đến vậy.
Dialogue: 0,0:16:41.18,0:16:42.44,[Assassin],,0000,0000,0000,,Nhưng rồi...
Dialogue: 0,0:16:42.44,0:16:45.12,[Assassin],,0000,0000,0000,,Hai anh em nhận ra một điều.
Dialogue: 0,0:16:45.12,0:16:46.66,[Assassin],,0000,0000,0000,,Có nhiều đứa...
Dialogue: 0,0:16:46.66,0:16:49.27,[Assassin],,0000,0000,0000,,Bị đem đến trước bọn em.
Dialogue: 0,0:16:49.27,0:16:53.27,[Assassin],,0000,0000,0000,,Cứ hễ khóc lên là sẽ bị đánh bằng gậy sắt.\N Rồi anh biết sao không?
Dialogue: 0,0:16:54.20,0:16:56.18,[Assassin],,0000,0000,0000,,Đám lớn hơn đều cười vào mặt chúng.
Dialogue: 0,0:16:56.18,0:16:58.28,[Assassin],,0000,0000,0000,,Cả anh trai và em cũng cười chúng.
Dialogue: 0,0:16:58.85,0:17:02.64,[Assassin],,0000,0000,0000,,Vì nếu cứ cười thì mọi chuyện sẽ qua cả thôi.
Dialogue: 0,0:17:03.68,0:17:04.53,[Assassin],,0000,0000,0000,,Đúng...
Dialogue: 0,0:17:04.53,0:17:08.68,[Assassin],,0000,0000,0000,,Người có chết thì quả đất mới tiếp tục quay...
Dialogue: 0,0:17:10.10,0:17:14.07,[Assassin],,0000,0000,0000,,Và bọn em sống trên đời cũng vì điều đó.
Dialogue: 0,0:17:14.70,0:17:15.64,[Assassin],,0000,0000,0000,,Giết người...
Dialogue: 0,0:17:15.64,0:17:16.48,[Assassin],,0000,0000,0000,,Bị giết...
Dialogue: 0,0:17:16.48,0:17:18.09,[Assassin],,0000,0000,0000,,Rồi lại đi giết tiếp...
Dialogue: 0,0:17:18.09,0:17:20.86,[Assassin],,0000,0000,0000,,Cứ thế thành một vòng tròn xoay.
Dialogue: 0,0:17:20.86,0:17:22.85,[Black_Lagoon],,0000,0000,0000,,Vậy ra...
Dialogue: 0,0:17:22.85,0:17:25.59,[Black_Lagoon],,0000,0000,0000,,Biết tin anh em chết mà em không buồn cũng là vì thế ư?
Dialogue: 0,0:17:27.10,0:17:28.94,[Assassin],,0000,0000,0000,,Anh nói gì vậy?
Dialogue: 0,0:17:28.94,0:17:31.93,[Assassin],,0000,0000,0000,,Em ở ngay đây mà...
Dialogue: 0,0:17:31.93,0:17:34.18,[Assassin],,0000,0000,0000,,Lúc nào cũng ở cạnh chị hai mà.
Dialogue: 0,0:17:34.93,0:17:37.62,[Assassin],,0000,0000,0000,,Chính bởi bọn em là bất diệt...
Dialogue: 0,0:17:37.62,0:17:39.61,[Assassin],,0000,0000,0000,,Trên cả cái vòng quay vô tận ấy.
Dialogue: 0,0:17:39.61,0:17:41.25,[Assassin],,0000,0000,0000,,Bọn em cứ tiếp tục giết mãi thế...
Dialogue: 0,0:17:41.25,0:17:42.72,[Assassin],,0000,0000,0000,,Và thế giới này...
Dialogue: 0,0:17:42.72,0:17:46.60,[Assassin],,0000,0000,0000,,Luôn có đầy người để bọn em giết...
Dialogue: 0,0:17:46.60,0:17:47.93,[Assassin],,0000,0000,0000,,Chính thế nên...
Dialogue: 0,0:17:47.93,0:17:49.94,[Assassin],,0000,0000,0000,,Chẳng bao giờ bọn em buồn cả.
Dialogue: 0,0:17:49.94,0:17:51.51,[Assassin],,0000,0000,0000,,Mùi huyết hương...
Dialogue: 0,0:17:51.51,0:17:52.67,[Assassin],,0000,0000,0000,,Tiếng gào thét...
Dialogue: 0,0:17:52.67,0:17:54.50,[Assassin],,0000,0000,0000,,Nhiệt từ từng thớ ruột...
Dialogue: 0,0:17:54.50,0:17:56.53,[Assassin],,0000,0000,0000,,Đã thành niềm vui của bọn em rồi.
Dialogue: 0,0:17:57.63,0:17:59.13,[Black_Lagoon],,0000,0000,0000,,Đừng!
Dialogue: 0,0:17:59.13,0:18:00.09,[Black_Lagoon],,0000,0000,0000,,Đừng thế...
Dialogue: 0,0:18:00.09,0:18:04.05,[Black_Lagoon],,0000,0000,0000,,Thế giới này luôn khiến em vui cơ mà.
Dialogue: 0,0:18:04.51,0:18:08.33,[Black_Lagoon],,0000,0000,0000,,Nghe này. Máu và bóng đêm chỉ là \Nnhững góc khuất nhỏ nhoi của thế giới này thôi.
Dialogue: 0,0:18:08.33,0:18:10.48,[Black_Lagoon],,0000,0000,0000,,Nó còn tồn tại nhiều điều lắm!
Dialogue: 0,0:18:11.47,0:18:12.79,[Assassin],,0000,0000,0000,,Nè...
Dialogue: 0,0:18:12.79,0:18:14.85,[Assassin],,0000,0000,0000,,Đừng khóc thế, anh à.
Dialogue: 0,0:18:16.15,0:18:19.40,[Assassin],,0000,0000,0000,,Lần đầu lại có người tốt với em như anh đó!
Dialogue: 0,0:18:19.40,0:18:20.23,[Assassin],,0000,0000,0000,,Thế nên...
Dialogue: 0,0:18:22.88,0:18:23.74,[Assassin],,0000,0000,0000,,Nè...
Dialogue: 0,0:18:23.74,0:18:24.96,[Assassin],,0000,0000,0000,,Cho anh đó.
Dialogue: 0,0:18:33.87,0:18:34.50,[Black_Lagoon],,0000,0000,0000,,Rock!?
Dialogue: 0,0:18:34.50,0:18:35.14,[Black_Lagoon],,0000,0000,0000,,Benny!
Dialogue: 0,0:18:35.14,0:18:37.01,[Black_Lagoon],,0000,0000,0000,,Đi xem lão ra sao đi!
Dialogue: 0,0:18:37.52,0:18:39.39,[Black_Lagoon],,0000,0000,0000,,Con nhóc này cứ để tôi!
Dialogue: 0,0:18:39.39,0:18:40.47,[Black_Lagoon],,0000,0000,0000,,Biết rồi!
Dialogue: 0,0:18:42.26,0:18:43.37,[Black_Lagoon],,0000,0000,0000,,Hờ...
Dialogue: 0,0:18:43.37,0:18:46.55,[Black_Lagoon],,0000,0000,0000,,Vậy ra thứ như mày mà máu cũng màu đỏ à....
Dialogue: 0,0:18:46.55,0:18:47.60,[Black_Lagoon],,0000,0000,0000,,Đồ chó má.
Dialogue: 0,0:18:48.00,0:18:49.01,[Black_Lagoon],,0000,0000,0000,,Tao đếch phải chị mày đâu.
Dialogue: 0,0:18:49.48,0:18:52.78,[Black_Lagoon],,0000,0000,0000,,Mày sống nhăn ra đó đủ làm tao điên máu lắm rồi.
Dialogue: 0,0:18:54.53,0:18:57.47,[Black_Lagoon],,0000,0000,0000,,Bà chị bốc mùi ghê quá đấy.
Dialogue: 0,0:18:57.78,0:19:00.53,[Black_Lagoon],,0000,0000,0000,,Cái mùi cống thối với cả máu me đó.
Dialogue: 0,0:19:00.53,0:19:02.55,[Black_Lagoon],,0000,0000,0000,,Tôi với bà chị cùng giuộc cả thôi!
Dialogue: 0,0:19:02.55,0:19:04.28,[Black_Lagoon],,0000,0000,0000,,Kệ mẹ sao cũng được.
Dialogue: 0,0:19:04.28,0:19:06.99,[Black_Lagoon],,0000,0000,0000,,Mày còn chọc ngu lão ấy lần nữa, chết đừng có than.
Dialogue: 0,0:19:06.99,0:19:08.07,[Black_Lagoon],,0000,0000,0000,,Với lại...
Dialogue: 0,0:19:08.07,0:19:11.47,[Black_Lagoon],,0000,0000,0000,,Mày mà chọc tao điên là tao cũng giết nốt.
Dialogue: 0,0:19:12.38,0:19:13.49,[Black_Lagoon],,0000,0000,0000,,Chết tiệt!
Dialogue: 0,0:19:13.84,0:19:14.54,[Black_Lagoon],,0000,0000,0000,,Mẹ nó!
Dialogue: 0,0:19:14.54,0:19:15.41,[Black_Lagoon],,0000,0000,0000,,Vì sao chứ?
Dialogue: 0,0:19:15.41,0:19:16.97,[Black_Lagoon],,0000,0000,0000,,Sao những chuyện như thế lại có thể xảy ra chứ?
Dialogue: 0,0:19:16.97,0:19:19.45,[Black_Lagoon],,0000,0000,0000,,Lũ chúng nó hủy hoại đời con bé thành một thứ hổ đói.
Dialogue: 0,0:19:20.75,0:19:22.77,[Black_Lagoon],,0000,0000,0000,,Một lũ ăn thịt người!
Dialogue: 0,0:19:22.77,0:19:23.74,[Black_Lagoon],,0000,0000,0000,,Chết tiệt!
Dialogue: 0,0:19:23.74,0:19:24.64,[Black_Lagoon],,0000,0000,0000,,Rock.
Dialogue: 0,0:19:24.64,0:19:26.36,[Black_Lagoon],,0000,0000,0000,,Đừng nên nhìn trực diện vấn đề như vậy.
Dialogue: 0,0:19:27.46,0:19:30.27,[Black_Lagoon],,0000,0000,0000,,Ở một nơi như thế này, như thế lại là tốt đấy.
Dialogue: 0,0:19:32.00,0:19:33.35,[Black_Lagoon],,0000,0000,0000,,Tôi... Tôi sẽ...
Dialogue: 0,0:19:33.35,0:19:34.98,[Black_Lagoon],,0000,0000,0000,,Nhận nuôi con bé ư?
Dialogue: 0,0:19:34.98,0:19:35.86,[Black_Lagoon],,0000,0000,0000,,Vô phương thôi.
Dialogue: 0,0:19:37.02,0:19:39.23,[Black_Lagoon],,0000,0000,0000,,Con bé ấy vẫn sẽ tiếp tục giết chóc thôi.
Dialogue: 0,0:19:39.85,0:19:42.88,[Black_Lagoon],,0000,0000,0000,,Nếu chúng được nhận nuôi bởi ai đó tử tế...
Dialogue: 0,0:19:42.88,0:19:47.56,[Black_Lagoon],,0000,0000,0000,,Có khi chúng đã được đến trường, vui chơi, hưởng một cuộc sống hanh phúc rồi.
Dialogue: 0,0:19:48.18,0:19:51.24,[Black_Lagoon],,0000,0000,0000,,Nhưng nó lại không đến với chúng, Rock à.
Dialogue: 0,0:19:52.58,0:19:55.63,[Black_Lagoon],,0000,0000,0000,,Thế nên mọi chuyện nên dừng tại đây thôi...
Dialogue: 0,0:19:56.06,0:19:56.95,[Black_Lagoon],,0000,0000,0000,,Rock ạ.
Dialogue: 0,0:20:05.81,0:20:06.60,[Sub_Phụ],,0000,0000,0000,,Dutch.
Dialogue: 0,0:20:07.41,0:20:08.86,[Sub_Phụ],,0000,0000,0000,,Lâu ngày quá ha.
Dialogue: 0,0:20:09.17,0:20:10.81,[Black_Lagoon],,0000,0000,0000,,Ờ, lâu thật.
Dialogue: 0,0:20:11.52,0:20:13.36,[Sub_Phụ],,0000,0000,0000,,Hàng chuyển lần này đó à?
Dialogue: 0,0:20:13.36,0:20:13.69,[Black_Lagoon],,0000,0000,0000,,Ờ.
Dialogue: 0,0:20:14.27,0:20:17.32,[Black_Lagoon],,0000,0000,0000,,Thật làm phiền anh, nhưng anh lo hộ nó cái hộ chiếu nha?
Dialogue: 0,0:20:17.53,0:20:19.24,[Sub_Phụ],,0000,0000,0000,,Thì như mọi khi...
Dialogue: 0,0:20:19.24,0:20:20.70,[Sub_Phụ],,0000,0000,0000,,Lo hết mọi thứ chứ sao.
Dialogue: 0,0:20:23.70,0:20:25.70,[Black_Lagoon],,0000,0000,0000,,Anh à, hẹn gặp lại.
Dialogue: 0,0:20:25.70,0:20:27.75,[Black_Lagoon],,0000,0000,0000,,Sau này có duyên gặp lại nhé!
Dialogue: 0,0:20:27.75,0:20:30.79,[Black_Lagoon],,0000,0000,0000,,Chắc chắn phải đi ăn trưa 1 lần đó.
Dialogue: 0,0:20:30.95,0:20:32.04,[Black_Lagoon],,0000,0000,0000,,Ờ.
Dialogue: 0,0:20:32.24,0:20:34.05,[Black_Lagoon],,0000,0000,0000,,Ý kiến hay đó.
Dialogue: 0,0:20:34.14,0:20:35.13,[Black_Lagoon],,0000,0000,0000,,Hay lắm đó.
Dialogue: 0,0:20:44.49,0:20:47.09,[Assassin],,0000,0000,0000,,Thật đẹp quá.
Dialogue: 0,0:20:47.09,0:20:48.05,[Assassin],,0000,0000,0000,,Bầu trời.
Dialogue: 0,0:20:50.70,0:20:53.26,[Sub_Phụ],,0000,0000,0000,,Ngoài Hotel Moscow ra, Dutch.
Dialogue: 0,0:20:53.26,0:20:54.87,[Sub_Phụ],,0000,0000,0000,,Còn ai khác nữa?
Dialogue: 0,0:20:55.25,0:20:57.51,[Black_Lagoon],,0000,0000,0000,,Anh vừa kí vào đơn giải nghệ đấy.
Dialogue: 0,0:20:57.78,0:21:00.18,[Sub_Phụ],,0000,0000,0000,,Ờ, xong hết rồi.
Dialogue: 0,0:21:00.18,0:21:03.01,[Sub_Phụ],,0000,0000,0000,,Tôi có thằng con ở Nam Phi.
Dialogue: 0,0:21:04.13,0:21:06.66,[Sub_Phụ],,0000,0000,0000,,Vợ tôi vừa nhắn...
Dialogue: 0,0:21:06.66,0:21:10.04,[Sub_Phụ],,0000,0000,0000,,Người ta chẩn đoán nó bị ung thư khi mới 34 tuổi.
Dialogue: 0,0:21:10.61,0:21:14.28,[Sub_Phụ],,0000,0000,0000,,Dù gì đi nữa, bôn ba mãi khiến tôi mỏi mệt lắm rồi.
Dialogue: 0,0:21:14.28,0:21:16.68,[Sub_Phụ],,0000,0000,0000,,Đây là việc cuối cùng của tôi.
Dialogue: 0,0:21:17.11,0:21:20.80,[Sub_Phụ],,0000,0000,0000,,Hotel Moscow đã trả một khoản hậu hĩnh cho tôi rồi.
