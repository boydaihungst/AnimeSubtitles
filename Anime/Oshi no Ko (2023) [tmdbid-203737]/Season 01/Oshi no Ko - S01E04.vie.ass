Dialogue: 0,0:01:40.10,0:01:43.81,Default,,0,0,0,,{\i1}Trời đổ mưa tầm tã{\i}\N{\i1}nên có cả nước dột bên trong.{\i}
Dialogue: 0,0:01:45.56,0:01:48.56,Default,,0,0,0,,{\i1}Phần diễn xuất được dàn dựng trước,{\i}\N{\i1}đánh dấu cả chỗ đứng sẵn.{\i}
Dialogue: 0,0:01:49.15,0:01:51.44,Default,,0,0,0,,{\i1}Những nơi nước đọng được khéo léo bỏ qua.{\i}
Dialogue: 0,0:01:52.11,0:01:54.53,Default,,0,0,0,,{\i1}Mình cũng đã xác nhận điều đó lúc tập.{\i}
Dialogue: 0,0:01:54.61,0:01:59.53,Default,,0,0,0,,{\i1}Cảnh mình xuất hiện, cảnh xung quanh,{\i}\N{\i1}vị trí máy quay, ánh sáng,{\i}
Dialogue: 0,0:02:00.03,0:02:02.49,Default,,0,0,0,,{\i1}và mình lên hình ra sao{\i}\N{\i1}khi chuyển cảnh hay lược bớt.{\i}
Dialogue: 0,0:02:03.87,0:02:06.37,Default,,0,0,0,,{\i1}Mình phải khắc ghi cảnh tượng{\i}\N{\i1}vào đầu một lần nữa.{\i}
Dialogue: 0,0:02:12.88,0:02:14.96,Default,,0,0,0,,Tiếp tục quay nào!
Dialogue: 0,0:02:15.05,0:02:16.67,Default,,0,0,0,,Bấm máy được rồi.
Dialogue: 0,0:02:16.76,0:02:17.93,Default,,0,0,0,,Ánh sáng sẵn sàng.
Dialogue: 0,0:02:18.01,0:02:19.26,Default,,0,0,0,,Micro sẵn sàng.
Dialogue: 0,0:02:20.05,0:02:22.43,Default,,0,0,0,,Phân đoạn sáu, cảnh 51.
Dialogue: 0,0:02:22.51,0:02:24.31,Default,,0,0,0,,{\an8}Chuẩn bị, diễn!
Dialogue: 0,0:02:26.68,0:02:30.73,Default,,0,0,0,,{\i1}Âm thanh tấm chập va vào nhau,{\i}\N{\i1}và máy quay bắt đầu chạy.{\i}
Dialogue: 0,0:02:31.36,0:02:34.07,Default,,0,0,0,,{\i1}Không khí trong phòng{\i}\N{\i1}ngột ngạt hơn vì căng thẳng.{\i}
Dialogue: 0,0:02:34.65,0:02:37.70,Default,,0,0,0,,{\i1}Như thể cả một năm đang cô đọng lại,{\i}
Dialogue: 0,0:02:37.78,0:02:40.16,Default,,0,0,0,,{\i1}một khoảnh khắc nặng nề{\i}\N{\i1}nhưng mạnh mẽ trôi qua.{\i}
Dialogue: 0,0:02:40.87,0:02:45.33,Default,,0,0,0,,{\i1}Khoảnh khắc ấy rất dài,{\i}\N{\i1}như thể cuộc đời mình bị đưa ra thử thách.{\i}
Dialogue: 0,0:02:47.20,0:02:49.54,Default,,0,0,0,,{\i1}Tên mình là Arima Kana.{\i}
Dialogue: 0,0:02:49.62,0:02:53.59,Default,,0,0,0,,{\i1}Mình được gọi là thiên tài từ nhỏ,{\i}\N{\i1}ai cũng nuông chiều mình.{\i}
Dialogue: 0,0:02:53.67,0:02:55.42,Default,,0,0,0,,Cậu lại lên TV rồi!
Dialogue: 0,0:02:55.50,0:02:57.34,Default,,0,0,0,,Kana, tuyệt quá!
Dialogue: 0,0:02:57.42,0:02:58.55,Default,,0,0,0,,{\an8}Cảm ơn nhé.
Dialogue: 0,0:02:58.63,0:03:00.55,Default,,0,0,0,,{\an8}THỜI HOÀNG KIM CỦA ARIMA KANA
Dialogue: 0,0:03:01.14,0:03:01.97,Default,,0,0,0,,{\i1}Thế nhưng…{\i}
Dialogue: 0,0:03:02.89,0:03:06.35,Default,,0,0,0,,{\i1}Vì tài năng của mình{\i}\N{\i1}hay chỉ là công chúng cả thèm chóng chán?{\i}
Dialogue: 0,0:03:06.43,0:03:09.64,Default,,0,0,0,,{\i1}Hay vì mình cần nỗ lực thêm nữa?{\i}
Dialogue: 0,0:03:10.23,0:03:13.61,Default,,0,0,0,,{\i1}Con người sẽ chóng chán{\i}\N{\i1}sau một thời gian đủ dài.{\i}
Dialogue: 0,0:03:14.32,0:03:17.44,Default,,0,0,0,,{\i1}Lúc này, mình bị trên mạng gọi là{\i}\N{\i1}"ngôi sao nhí hết thời".{\i}
Dialogue: 0,0:03:17.53,0:03:18.99,Default,,0,0,0,,CỰU NGÔI SAO NHÍ THIÊN TÀI
Dialogue: 0,0:03:22.07,0:03:25.70,Default,,0,0,0,,{\i1}Xem ra mình đã qua thời vàng son{\i}\N{\i1}sau một cột mốc nào đó hồi tiểu học,{\i}
Dialogue: 0,0:03:26.54,0:03:28.83,Default,,0,0,0,,{\i1}nhưng mình vẫn miệt mài bám trụ với ngành,{\i}
Dialogue: 0,0:03:28.91,0:03:31.54,Default,,0,0,0,,{\an8\i1}và cuối cùng cũng có được{\i}\N{\i1}vai nữ chính mong mỏi đã lâu.{\i}
Dialogue: 0,0:03:31.62,0:03:34.25,Default,,0,0,0,,{\an8\i1}Mình muốn bộ phim này phải hay,{\i}\N{\i1}bằng bất cứ giá nào.{\i}
Dialogue: 0,0:03:34.34,0:03:37.05,Default,,0,0,0,,{\i1}Mình sẵn sàng nằm gai nếm mật{\i}\N{\i1}chỉ vì mục đích ấy.{\i}
Dialogue: 0,0:03:37.13,0:03:38.01,Default,,0,0,0,,GAI?
Dialogue: 0,0:03:39.22,0:03:40.51,Default,,0,0,0,,{\i1}Mình biết chứ.{\i}
Dialogue: 0,0:03:40.59,0:03:43.30,Default,,0,0,0,,{\i1}Mình biết bộ phim này dở như hạch.{\i}
Dialogue: 0,0:03:43.80,0:03:45.93,Default,,0,0,0,,{\i1}Không ai có kĩ năng diễn xuất cơ bản.{\i}
Dialogue: 0,0:03:46.01,0:03:50.43,Default,,0,0,0,,{\i1}Bốn tập đã lên sóng,{\i}\N{\i1}hầu hết khán giả đều chê thậm tệ.{\i}
Dialogue: 0,0:03:50.52,0:03:53.65,Default,,0,0,0,,{\an8\i1}Nó đã được gắn mác là phim thất bại.{\i}
Dialogue: 0,0:03:53.73,0:03:56.77,Default,,0,0,0,,{\i1}Nhưng vẫn chưa quá muộn.{\i}
Dialogue: 0,0:03:56.86,0:03:59.78,Default,,0,0,0,,{\an8\i1}Đoạn này là một trong những cảnh{\i}\N{\i1}hay nhất trong truyện gốc.{\i}
Dialogue: 0,0:04:00.36,0:04:02.36,Default,,0,0,0,,{\i1}Anh hùng đối đầu với kẻ bám đuôi.{\i}
Dialogue: 0,0:04:02.91,0:04:06.49,Default,,0,0,0,,{\i1}Cô nữ sinh chưa từng được yêu thương{\i}\N{\i1}lần đầu có ai đó bảo vệ mình{\i}
Dialogue: 0,0:04:06.58,0:04:07.95,Default,,0,0,0,,{\i1}nên rơi nước mắt.{\i}
Dialogue: 0,0:04:08.62,0:04:11.21,Default,,0,0,0,,{\i1}Mỗi lần đọc tới đoạn này trong manga{\i}\N{\i1}là mình lại khóc.{\i}
Dialogue: 0,0:04:11.29,0:04:14.17,Default,,0,0,0,,{\i1}Mình thích nó tới nỗi đọc đi đọc lại.{\i}
Dialogue: 0,0:04:15.25,0:04:20.63,Default,,0,0,0,,{\i1}Nếu mình phối hợp với Melt, hỗ trợ cậu ta,{\i}\N{\i1}cho ra diễn xuất tốt nhất{\i}
Dialogue: 0,0:04:20.71,0:04:22.22,Default,,0,0,0,,{\i1}thì mình chắc chắn vẫn có thể…{\i}
Dialogue: 0,0:04:22.30,0:04:23.26,Default,,0,0,0,,Để tớ yên đi!
Dialogue: 0,0:04:23.34,0:04:25.43,Default,,0,0,0,,Đừng bám theo tớ nữa!
Dialogue: 0,0:04:25.97,0:04:28.01,Default,,0,0,0,,Đúng là cậu toàn như thế.
Dialogue: 0,0:04:28.81,0:04:30.22,Default,,0,0,0,,{\i1}Phối hợp với cậu ta{\i}…
Dialogue: 0,0:04:30.31,0:04:31.14,Default,,0,0,0,,Nhưng…
Dialogue: 0,0:04:31.23,0:04:33.39,Default,,0,0,0,,Tớ không để cậu một mình đâu!
Dialogue: 0,0:04:34.60,0:04:37.61,Default,,0,0,0,,{\i1}Bó tay thôi!{\i}\N{\i1}Cậu ta hết phương cứu vãn rồi!{\i}
Dialogue: 0,0:04:38.19,0:04:41.32,Default,,0,0,0,,{\i1}Sao đạo diễn và đoàn phim nghĩ{\i}\N{\i1}diễn xuất này vẫn ổn vậy?{\i}
Dialogue: 0,0:04:41.90,0:04:47.03,Default,,0,0,0,,{\i1}Chẳng phải cảnh này cần căng thẳng,{\i}\N{\i1}đáng sợ, rùng rợn sao?{\i}
Dialogue: 0,0:04:47.83,0:04:50.74,Default,,0,0,0,,{\i1}Có thật là diễn xuất{\i}\N{\i1}không quan trọng không?{\i}
Dialogue: 0,0:04:51.37,0:04:52.71,Default,,0,0,0,,{\i1}Cảnh này đáng lẽ…{\i}
Dialogue: 0,0:05:03.97,0:05:06.97,Default,,0,0,0,,Micro đang thu cả\Ntiếng bước chân giẫm lên nước đọng.
Dialogue: 0,0:05:07.05,0:05:07.97,Default,,0,0,0,,Có nên dừng không?
Dialogue: 0,0:05:08.05,0:05:09.10,Default,,0,0,0,,Không.
Dialogue: 0,0:05:10.47,0:05:12.39,Default,,0,0,0,,Cứ đưa vào để tạo không khí.
Dialogue: 0,0:05:15.19,0:05:18.90,Default,,0,0,0,,Cô gái này không phải người\Nnhư mày nghĩ đâu.
Dialogue: 0,0:05:19.48,0:05:21.65,Default,,0,0,0,,Tên trăng hoa như mày không xứng với…
Dialogue: 0,0:05:21.73,0:05:26.36,Default,,0,0,0,,{\i1}Ban nãy mình không nghĩ{\i}\N{\i1}cậu ấy diễn tốt đến thế.{\i}
Dialogue: 0,0:05:26.99,0:05:29.66,Default,,0,0,0,,{\i1}Nhưng giờ, diễn xuất của cậu ấy{\i}\N{\i1}có vẻ xuất thần hơn lúc tập.{\i}
Dialogue: 0,0:05:30.83,0:05:33.08,Default,,0,0,0,,{\i1}Mình không có tài năng như Ai.{\i}
Dialogue: 0,0:05:33.66,0:05:38.17,Default,,0,0,0,,{\i1}Mình không có thần thái hút hồn.{\i}\N{\i1}Diễn xuất cũng không hay lắm.{\i}
Dialogue: 0,0:05:38.75,0:05:41.67,Default,,0,0,0,,{\i1}Thế nên, mình sẽ tận dụng mọi thứ có thể.{\i}
Dialogue: 0,0:05:42.71,0:05:46.05,Default,,0,0,0,,{\i1}Đạo cụ, máy quay, ánh sáng, diễn viên…{\i}
Dialogue: 0,0:05:46.88,0:05:50.76,Default,,0,0,0,,{\i1}Mình sẽ dùng mọi thứ có thể{\i}\N{\i1}để được như Ai.{\i}
Dialogue: 0,0:05:54.64,0:05:58.06,Default,,0,0,0,,Mày biết không,\Nnhìn gần mới thấy mặt mày xấu thật.
Dialogue: 0,0:05:59.15,0:06:01.32,Default,,0,0,0,,Có phải vì thế nên mày đã chỉnh ảnh không?
Dialogue: 0,0:06:02.32,0:06:03.57,Default,,0,0,0,,Hả?
Dialogue: 0,0:06:03.65,0:06:05.32,Default,,0,0,0,,Mày vừa nói gì?
Dialogue: 0,0:06:10.28,0:06:11.99,Default,,0,0,0,,Mày không nghe gì à?
Dialogue: 0,0:06:12.08,0:06:14.58,Default,,0,0,0,,Tao nói con nhỏ đó\Ncòn không đáng để mày bảo vệ!
Dialogue: 0,0:06:14.66,0:06:19.12,Default,,0,0,0,,Cậu nhóc kia tự bịa thoại,\Nbỏ qua cả chỗ đánh dấu vị trí đứng.
Dialogue: 0,0:06:19.21,0:06:20.08,Default,,0,0,0,,Đừng cản cậu ta.
Dialogue: 0,0:06:20.67,0:06:23.84,Default,,0,0,0,,Cho máy quay số hai theo cậu ta.\NChỉnh ánh sáng mạnh hơn.
Dialogue: 0,0:06:24.67,0:06:27.93,Default,,0,0,0,,Cô ấy là người bạn quan trọng của tao!
Dialogue: 0,0:06:29.51,0:06:30.47,Default,,0,0,0,,{\i1}Hay quá.{\i}
Dialogue: 0,0:06:31.39,0:06:33.47,Default,,0,0,0,,{\i1}Trông hệt như truyện gốc!{\i}
Dialogue: 0,0:06:34.06,0:06:36.39,Default,,0,0,0,,{\i1}Đây là cảnh hay nhất trong truyện.{\i}
Dialogue: 0,0:06:36.89,0:06:39.56,Default,,0,0,0,,{\i1}Chỉ đạo sân khấu, ghép cảnh, nhịp độ…{\i}
Dialogue: 0,0:06:40.06,0:06:41.56,Default,,0,0,0,,{\i1}mọi thứ đều có ý nghĩa riêng.{\i}
Dialogue: 0,0:06:42.73,0:06:47.03,Default,,0,0,0,,{\i1}Mình luôn giỏi môn phân tích văn học,{\i}\N{\i1}vốn đòi hỏi phải hiểu tư duy của tác giả.{\i}
Dialogue: 0,0:06:47.74,0:06:51.24,Default,,0,0,0,,{\i1}Miễn hiểu được câu chuyện{\i}\N{\i1}là có thể dễ dàng đủ điểm đạt.{\i}
Dialogue: 0,0:06:52.07,0:06:54.41,Default,,0,0,0,,{\i1}Đây, để tôi dàn dựng cho cậu.{\i}
Dialogue: 0,0:06:54.49,0:06:55.95,Default,,0,0,0,,{\i1}Cậu muốn làm việc ấy mà, nhỉ?{\i}
Dialogue: 0,0:06:56.45,0:06:59.16,Default,,0,0,0,,{\i1}Diễn hết mình đi, Arima Kana.{\i}
Dialogue: 0,0:07:02.96,0:07:04.88,Default,,0,0,0,,Mày có làm gì cũng vô ích thôi!
Dialogue: 0,0:07:04.96,0:07:08.97,Default,,0,0,0,,{\i1}Điểm nhấn của cảnh này{\i}\N{\i1}là lúc nữ chính rơi nước mắt.{\i}
Dialogue: 0,0:07:09.47,0:07:11.64,Default,,0,0,0,,{\i1}Chỉ để giây phút ấy tỏa sáng,{\i}
Dialogue: 0,0:07:12.26,0:07:14.56,Default,,0,0,0,,{\i1}mình sẽ đặc tả bóng tối.{\i}
Dialogue: 0,0:07:18.23,0:07:20.14,Default,,0,0,0,,Bỏ cuộc và chấp nhận số phận đi!
Dialogue: 0,0:07:21.23,0:07:23.90,Default,,0,0,0,,{\i1}Trở nên đáng sợ. Trở nên quái dị.{\i}
Dialogue: 0,0:07:29.99,0:07:32.87,Default,,0,0,0,,Chẳng ai cần mày đâu.
Dialogue: 0,0:07:32.95,0:07:35.12,Default,,0,0,0,,Mày phải sống mà biết thân biết phận đi!
Dialogue: 0,0:07:35.20,0:07:37.12,Default,,0,0,0,,Đừng mơ hão nữa!
Dialogue: 0,0:07:37.20,0:07:42.58,Default,,0,0,0,,Chẳng có gì tốt đẹp chờ đợi phía trước!\NCuộc đời mày đều là bóng tối!
Dialogue: 0,0:07:47.13,0:07:48.38,Default,,0,0,0,,{\i1}Để kết thúc…{\i}
Dialogue: 0,0:07:48.92,0:07:51.26,Default,,0,0,0,,{\i1}Nếu Arima Kana có thể khóc nhập tâm…{\i}
Dialogue: 0,0:07:54.30,0:07:55.51,Default,,0,0,0,,Dù như vậy…
Dialogue: 0,0:07:56.51,0:07:59.68,Default,,0,0,0,,Dù như vậy, ánh sáng vẫn tồn tại.
Dialogue: 0,0:08:05.81,0:08:08.78,Default,,0,0,0,,{\i1}Phải rồi, đấy là chuyên môn của cậu ấy mà.{\i}
Dialogue: 0,0:08:16.28,0:08:17.49,Default,,0,0,0,,Tôi xin lỗi.
Dialogue: 0,0:08:18.20,0:08:21.25,Default,,0,0,0,,Ban nãy tôi đánh trúng cậu nhỉ?\NLúc đó tôi căng thẳng quá.
Dialogue: 0,0:08:21.33,0:08:22.37,Default,,0,0,0,,Không cần xin lỗi.
Dialogue: 0,0:08:23.08,0:08:25.17,Default,,0,0,0,,- Tôi cố tình đổi chỗ để ăn đấm.\N- Cái gì?
Dialogue: 0,0:08:25.71,0:08:28.71,Default,,0,0,0,,Không gì bằng diễn xuất\Nmà đặt hết cảm xúc vào.
Dialogue: 0,0:08:28.80,0:08:30.38,Default,,0,0,0,,Cậu diễn tốt lắm.
Dialogue: 0,0:08:30.46,0:08:33.34,Default,,0,0,0,,Nhờ vậy, Arima mới được diễn hết mình.
Dialogue: 0,0:08:35.14,0:08:39.39,Default,,0,0,0,,Trời ạ, cậu nhóc đó\Nlàm mọi thứ rối tung lên hết.
Dialogue: 0,0:08:39.47,0:08:42.56,Default,,0,0,0,,Chúng ta phải điều chỉnh lại\Nviệc sắp đặt chuyển động trong cảnh quay.
Dialogue: 0,0:08:43.23,0:08:45.06,Default,,0,0,0,,Không sao đâu.
Dialogue: 0,0:08:45.15,0:08:47.02,Default,,0,0,0,,Quay phim với một đống diễn viên nhí
Dialogue: 0,0:08:47.11,0:08:49.57,Default,,0,0,0,,thì thường phải viết lại kịch bản\Nsau khi diễn mà.
Dialogue: 0,0:08:50.28,0:08:53.78,Default,,0,0,0,,Chúng ta làm việc với diễn viên trẻ\Nthì phải lường trước việc đó.
Dialogue: 0,0:08:55.28,0:08:59.16,Default,,0,0,0,,Xem ra cảnh này sẽ rất xuất sắc,\Nchắc chắn Kana sẽ hạnh phúc.
Dialogue: 0,0:09:02.33,0:09:05.08,Default,,0,0,0,,Kana, quay cảnh cuối được chưa?
Dialogue: 0,0:09:05.92,0:09:07.00,Default,,0,0,0,,Kana?
Dialogue: 0,0:09:07.08,0:09:08.54,Default,,0,0,0,,Dạ vâng!
Dialogue: 0,0:09:08.63,0:09:11.00,Default,,0,0,0,,Phân đoạn bảy, cảnh 310.
Dialogue: 0,0:09:11.09,0:09:13.63,Default,,0,0,0,,Chuẩn bị, diễn!
Dialogue: 0,0:09:14.76,0:09:17.39,Default,,0,0,0,,GƯƠNG MẶT CỦA THIẾU NỮ\NĐEM LÒNG YÊU NHÂN VẬT CHÍNH
Dialogue: 0,0:09:29.44,0:09:31.53,Default,,0,0,0,,Chào buổi sáng!
Dialogue: 0,0:09:31.61,0:09:34.36,Default,,0,0,0,,Chị muốn ngủ thì làm ơn lên giường mà ngủ.
Dialogue: 0,0:09:34.44,0:09:36.20,Default,,0,0,0,,Nằm đó đau lưng đấy.
Dialogue: 0,0:09:38.57,0:09:41.16,Default,,0,0,0,,Chị lên giường nằm sẽ ngủ quên mất,
Dialogue: 0,0:09:41.24,0:09:44.83,Default,,0,0,0,,nhưng ngủ trên sàn thì tầm bốn tiếng\Nchị sẽ dậy được.
Dialogue: 0,0:09:44.91,0:09:46.96,Default,,0,0,0,,Bí kíp sống không lành mạnh tẹo nào…
Dialogue: 0,0:09:48.25,0:09:49.92,Default,,0,0,0,,Chị có giao việc gì không ạ?
Dialogue: 0,0:09:50.00,0:09:52.21,Default,,0,0,0,,Chị đã đặt tạm phương hướng cho cảnh nền
Dialogue: 0,0:09:52.30,0:09:54.72,Default,,0,0,0,,của bìa trang hai và\Nkhung một, hai của trang ba.
Dialogue: 0,0:09:54.80,0:09:56.05,Default,,0,0,0,,Cảm ơn ạ.
Dialogue: 0,0:09:56.63,0:10:00.89,Default,,0,0,0,,Chị sắp xem {\i1}Hôm Nay Ngọt Ngào{\i} rồi,\Nkhi nào các cô xong thì báo với chị nhé.
Dialogue: 0,0:10:00.97,0:10:04.14,Default,,0,0,0,,Chị vẫn xem vào ngày chiếu tập mới đấy à?
Dialogue: 0,0:10:04.22,0:10:05.81,Default,,0,0,0,,Hai em không xem sao?
Dialogue: 0,0:10:05.89,0:10:07.27,Default,,0,0,0,,Em xem mỗi đoạn đầu.
Dialogue: 0,0:10:07.35,0:10:08.98,Default,,0,0,0,,Em xem được tới tập hai.
Dialogue: 0,0:10:09.73,0:10:11.69,Default,,0,0,0,,Cả hai đều bỏ ngang à?
Dialogue: 0,0:10:11.77,0:10:14.19,Default,,0,0,0,,Chị không cần tự ép mình xem phim đâu.
Dialogue: 0,0:10:14.28,0:10:17.74,Default,,0,0,0,,Chị đã rất cố gắng vẽ bộ truyện này,
Dialogue: 0,0:10:17.82,0:10:21.07,Default,,0,0,0,,nhưng họ làm bộ phim ấy\Nnhư để cười nhạo nó vậy.
Dialogue: 0,0:10:21.16,0:10:23.79,Default,,0,0,0,,Em tức quá, không xem nổi.
Dialogue: 0,0:10:25.45,0:10:27.29,Default,,0,0,0,,Chị đã biết ngay từ đầu rồi.
Dialogue: 0,0:10:28.17,0:10:32.42,Default,,0,0,0,,Nó là phim chuyển thể của một bộ manga\Nđã kết thúc, không có hướng phát triển.
Dialogue: 0,0:10:32.50,0:10:35.17,Default,,0,0,0,,Chị nên biết ơn vì vẫn được dựng phim.
Dialogue: 0,0:10:35.26,0:10:37.05,Default,,0,0,0,,Chị không có tư cách gì phàn nàn cả.
Dialogue: 0,0:10:38.26,0:10:41.30,Default,,0,0,0,,{\i1}Họa sĩ manga nào từng được{\i}\N{\i1}làm phim chuyển thể cũng nói:{\i}
Dialogue: 0,0:10:41.39,0:10:43.60,Default,,0,0,0,,{\i1}"Đừng trông chờ quá".{\i}
Dialogue: 0,0:10:44.35,0:10:50.35,Default,,0,0,0,,Những họa sĩ manga mộng tưởng\Nphim sẽ hay ra sao, tình tiết thế nào…
Dialogue: 0,0:10:50.44,0:10:53.07,Default,,0,0,0,,cuối cùng đều có biểu cảm thất vọng\Nsau khi xem xong.
Dialogue: 0,0:10:53.69,0:10:57.74,Default,,0,0,0,,Phim chuyển thể toàn như vậy, nhưng…
Dialogue: 0,0:10:57.82,0:11:01.20,Default,,0,0,0,,Dù như vậy, ánh sáng vẫn tồn tại.
Dialogue: 0,0:11:05.54,0:11:06.87,Default,,0,0,0,,Cô?
Dialogue: 0,0:11:07.83,0:11:11.75,Default,,0,0,0,,Chị vẫn cảm thấy rất biết ơn\Nvì bộ truyện được chuyển thể.
Dialogue: 0,0:11:12.67,0:11:15.38,Default,,0,0,0,,Mọi người ơi,\Nít nhất cũng xem tập cuối đi!
Dialogue: 0,0:11:15.46,0:11:16.80,Default,,0,0,0,,Đậm chất {\i1}Hôm Nay Ngọt Ngào{\i} lắm!
Dialogue: 0,0:11:18.63,0:11:20.01,Default,,0,0,0,,{\an8}TẬP CUỐI HAY DỮ VẬY?
Dialogue: 0,0:11:20.59,0:11:23.22,Default,,0,0,0,,{\i1}Phần lớn khán giả đã bỏ xem phim,{\i}
Dialogue: 0,0:11:23.30,0:11:27.47,Default,,0,0,0,,{\i1}chỉ còn những người thích bộ truyện và{\i}\N{\i1}người hâm mộ diễn viên tiếp tục xem.{\i}
Dialogue: 0,0:11:27.56,0:11:32.94,Default,,0,0,0,,{\i1}Tập cuối của Hôm Nay Ngọt Ngào không hề{\i}\N{\i1}nổi tiếng hay được bàn tán sôi nổi.{\i}
Dialogue: 0,0:11:33.61,0:11:37.61,Default,,0,0,0,,{\an8\i1}Nhưng nó âm thầm nhận không ít{\i}\N{\i1}lời khen từ một cộng đồng nhỏ trên mạng.{\i}
Dialogue: 0,0:11:37.69,0:11:39.95,Default,,0,0,0,,{\an8}TẬP CUỐI ĐÚNG LÀ KIỆT TÁC!
Dialogue: 0,0:11:43.49,0:11:45.41,Default,,0,0,0,,{\an8}TIỆC ĐÓNG MÁY PHIM {\i1}HÔM NAY NGỌT NGÀO{\i}
Dialogue: 0,0:11:45.99,0:11:48.37,Default,,0,0,0,,Diễn viên kia cũng có trong phim à?
Dialogue: 0,0:11:49.25,0:11:50.58,Default,,0,0,0,,Khi nhìn mọi người thế này,
Dialogue: 0,0:11:50.66,0:11:53.63,Default,,0,0,0,,tôi mới nhận ra bao nhiêu người\Nđã tham gia vào một bộ phim.
Dialogue: 0,0:11:53.71,0:11:58.59,Default,,0,0,0,,Đúng thế. Có nhiều công việc\Nkhông liên quan tới diễn xuất.
Dialogue: 0,0:11:59.17,0:12:03.47,Default,,0,0,0,,Chúng ta phải gặt hái kết quả tốt,\Ntuyệt đối không được gây thị phi.
Dialogue: 0,0:12:04.30,0:12:07.26,Default,,0,0,0,,Mà này, cậu có bạn gái hay gì chưa?
Dialogue: 0,0:12:07.35,0:12:09.52,Default,,0,0,0,,Chưa, nên tôi không lo thị phi.
Dialogue: 0,0:12:09.60,0:12:10.43,Default,,0,0,0,,Ra vậy.
Dialogue: 0,0:12:11.18,0:12:12.81,Default,,0,0,0,,Ồ.
Dialogue: 0,0:12:13.98,0:12:16.36,Default,,0,0,0,,Các em diễn tốt lắm.
Dialogue: 0,0:12:17.11,0:12:18.07,Default,,0,0,0,,Tác giả!
Dialogue: 0,0:12:22.57,0:12:26.99,Default,,0,0,0,,Tôi tin khả năng diễn xuất của em\Nlà cứu cánh cho bộ phim này, Arima.
Dialogue: 0,0:12:28.66,0:12:30.33,Default,,0,0,0,,Cảm ơn em rất nhiều.
Dialogue: 0,0:12:35.21,0:12:37.29,Default,,0,0,0,,Nhất là tập cuối.
Dialogue: 0,0:12:37.38,0:12:40.84,Default,,0,0,0,,Phải chi mấy tập trước cũng được như vậy.
Dialogue: 0,0:12:42.80,0:12:44.30,Default,,0,0,0,,Này, Aqua.
Dialogue: 0,0:12:44.89,0:12:46.80,Default,,0,0,0,,Tập cuối được nhiều bình luận tốt lắm.
Dialogue: 0,0:12:47.51,0:12:49.01,Default,,0,0,0,,Cảm ơn chú.
Dialogue: 0,0:12:49.10,0:12:51.89,Default,,0,0,0,,Bộ phim đem về doanh thu không cao,
Dialogue: 0,0:12:51.98,0:12:55.60,Default,,0,0,0,,nhưng mục tiêu là cho những tài năng trẻ\Nnhư cháu có đất diễn.
Dialogue: 0,0:12:55.69,0:12:58.06,Default,,0,0,0,,Nên có lẽ chúng tôi\Nđã làm tốt nhiệm vụ rồi.
Dialogue: 0,0:12:58.98,0:13:02.32,Default,,0,0,0,,{\i1}Sau khi mình gửi mẫu thuốc lá{\i}\N{\i1}của nhà sản xuất này đi kiểm tra ADN,{\i}
Dialogue: 0,0:13:02.90,0:13:07.32,Default,,0,0,0,,{\i1}mình mới biết ông ấy là người xa lạ,{\i}\N{\i1}nên nói chung cũng nhẹ nhõm.{\i}
Dialogue: 0,0:13:07.41,0:13:08.49,Default,,0,0,0,,{\i1}Tuy nhiên…{\i}
Dialogue: 0,0:13:08.58,0:13:11.08,Default,,0,0,0,,Cháu đến từ Ichigo Production à?
Dialogue: 0,0:13:11.95,0:13:13.33,Default,,0,0,0,,Không hiểu sao…
Dialogue: 0,0:13:13.91,0:13:16.33,Default,,0,0,0,,cháu có gương mặt rất giống Ai.
Dialogue: 0,0:13:17.92,0:13:19.09,Default,,0,0,0,,Thật ạ?
Dialogue: 0,0:13:19.17,0:13:20.34,Default,,0,0,0,,Ừ.
Dialogue: 0,0:13:20.42,0:13:24.42,Default,,0,0,0,,Tôi từng thấy mặt cô bé ở rất gần,\Nkhông thể nhầm lẫn được.
Dialogue: 0,0:13:25.26,0:13:27.51,Default,,0,0,0,,"Rất gần" sao?
Dialogue: 0,0:13:28.35,0:13:31.52,Default,,0,0,0,,Chú có quan hệ thế nào với Ai?
Dialogue: 0,0:13:32.18,0:13:36.02,Default,,0,0,0,,{\i1}Tôi làm việc cùng khi giới thiệu cô bé{\i}\N{\i1}làm người mẫu cho một tạp chí.{\i}
Dialogue: 0,0:13:36.10,0:13:40.65,Default,,0,0,0,,{\i1}Sau đó, tôi không chỉ gửi công việc{\i}\N{\i1}mà còn chăm sóc cô bé ở nhiều phương diện.{\i}
Dialogue: 0,0:13:41.19,0:13:43.11,Default,,0,0,0,,Ví dụ như giới thiệu khách hàng tốt.
Dialogue: 0,0:13:43.19,0:13:45.90,Default,,0,0,0,,Hay khi cô bé bí mật\Nđi gặp một cậu trai cùng công ty,
Dialogue: 0,0:13:45.99,0:13:47.82,Default,,0,0,0,,tôi sẽ giới thiệu nhà hàng ngon cho.
Dialogue: 0,0:13:49.49,0:13:51.49,Default,,0,0,0,,Chú có biết cô ấy từng đi cùng ai không?
Dialogue: 0,0:13:53.04,0:13:55.62,Default,,0,0,0,,Không lẽ cháu là người hâm mộ của Ai?
Dialogue: 0,0:13:55.71,0:13:57.87,Default,,0,0,0,,Thích nghe tin đồn\Ncủa các nghệ sĩ quá cố à?
Dialogue: 0,0:13:58.71,0:13:59.83,Default,,0,0,0,,Vâng ạ.
Dialogue: 0,0:14:00.42,0:14:01.96,Default,,0,0,0,,Xem nào.
Dialogue: 0,0:14:04.38,0:14:08.51,Default,,0,0,0,,Ta không ngại kể cho cháu,\Nnhưng hãy lập thành thỏa thuận nhé?
Dialogue: 0,0:14:09.26,0:14:13.47,Default,,0,0,0,,Cháu có gương mặt ưa nhìn, hệt như Ai vậy.
Dialogue: 0,0:14:14.52,0:14:18.52,Default,,0,0,0,,Cháu có hứng thú với\Nchương trình hẹn hò thực tế không?
Dialogue: 0,0:14:21.52,0:14:22.36,Default,,0,0,0,,Này.
Dialogue: 0,0:14:22.44,0:14:24.28,Default,,0,0,0,,Chưa xong nữa à, Ruby?
Dialogue: 0,0:14:24.36,0:14:27.45,Default,,0,0,0,,Trời ạ, chờ em chút đi, anh hai!
Dialogue: 0,0:14:27.53,0:14:30.45,Default,,0,0,0,,Bộ đồng phục này dễ thương mà khó mặc quá.
Dialogue: 0,0:14:31.20,0:14:32.78,Default,,0,0,0,,Nhưng đúng là dễ thương!
Dialogue: 0,0:14:32.87,0:14:35.75,Default,,0,0,0,,Đừng đi trễ ngay ngày đầu tiên chứ.
Dialogue: 0,0:14:37.33,0:14:39.00,Default,,0,0,0,,Sao váy em ngắn quá vậy?
Dialogue: 0,0:14:39.08,0:14:42.17,Default,,0,0,0,,Anh hai, anh toàn nói chuyện như ông già.
Dialogue: 0,0:14:42.84,0:14:43.88,Default,,0,0,0,,Phải rồi!
Dialogue: 0,0:14:44.92,0:14:47.13,Default,,0,0,0,,Mẹ ơi, tụi con đi nha.
Dialogue: 0,0:14:52.97,0:14:55.64,Default,,0,0,0,,{\an8}CHÚC MỪNG LỄ KHAI GIẢNG
Dialogue: 0,0:14:57.23,0:15:00.65,Default,,0,0,0,,Trong ba năm tới, các em phải…
Dialogue: 0,0:15:03.23,0:15:05.19,Default,,0,0,0,,Khối nghệ thuật là lớp F hả?
Dialogue: 0,0:15:05.28,0:15:07.40,Default,,0,0,0,,Phải. Mình đi cùng\Nnửa đoạn đến lớp đi anh!
Dialogue: 0,0:15:08.61,0:15:10.82,Default,,0,0,0,,Chúc mừng đã được vào trường, Aqua…
Dialogue: 0,0:15:10.91,0:15:11.99,Default,,0,0,0,,và Ruby.
Dialogue: 0,0:15:12.07,0:15:17.37,Default,,0,0,0,,Số ngày lên lớp ở trường phổ thông Youtou\Nlinh hoạt hơn các trường khác,
Dialogue: 0,0:15:17.45,0:15:21.79,Default,,0,0,0,,nhưng nếu hai cậu bị điểm kém\Nhoặc cúp tiết quá nhiều thì vẫn ở lại lớp.
Dialogue: 0,0:15:21.88,0:15:24.50,Default,,0,0,0,,Chương trình học cũng không khác biệt lắm.
Dialogue: 0,0:15:24.59,0:15:26.88,Default,,0,0,0,,Nhưng… bạn nam kia là diễn viên.
Dialogue: 0,0:15:27.51,0:15:30.09,Default,,0,0,0,,Hai bạn bên kia\Nthuộc nhóm thần tượng của một công ty lớn.
Dialogue: 0,0:15:30.68,0:15:33.18,Default,,0,0,0,,Cô ngực bự bên kia là người mẫu áo tắm.
Dialogue: 0,0:15:33.76,0:15:37.35,Default,,0,0,0,,Diễn viên lồng tiếng và {\i1}streamer{\i}…\NNgười mẫu thời trang, ca sĩ.
Dialogue: 0,0:15:37.43,0:15:40.14,Default,,0,0,0,,Cậu ngồi bên ghế\Nđóng kịch {\i1}Kabuki{\i}, kiêm đóng phim.
Dialogue: 0,0:15:41.73,0:15:43.48,Default,,0,0,0,,Ai cũng là người nổi tiếng.
Dialogue: 0,0:15:44.19,0:15:49.11,Default,,0,0,0,,Đây cũng là ngôi trường cấp ba\Nnhiều nghệ sĩ quy tụ nhất Nhật Bản.
Dialogue: 0,0:15:49.19,0:15:51.45,Default,,0,0,0,,Xin chào hai đàn em mới đến nhé.
Dialogue: 0,0:15:52.07,0:15:54.20,Default,,0,0,0,,Chào mừng đến với giới giải trí!
Dialogue: 0,0:15:59.25,0:16:00.91,Default,,0,0,0,,{\an8}Em bắt đầu thấy căng thẳng rồi!
Dialogue: 0,0:16:01.00,0:16:02.46,Default,,0,0,0,,{\an8}Không có gì căng thẳng đâu!
Dialogue: 0,0:16:03.04,0:16:07.25,Default,,0,0,0,,Đây không phải trường huấn luyện,\Nhay phim trường, chỉ là trường học thôi.
Dialogue: 0,0:16:07.34,0:16:09.17,Default,,0,0,0,,Chỉ cần cư xử bình thường là được.
Dialogue: 0,0:16:09.26,0:16:11.63,Default,,0,0,0,,LỚP 1-F
Dialogue: 0,0:16:20.77,0:16:21.69,Default,,0,0,0,,{\i1}Gái xinh bên phải!{\i}
Dialogue: 0,0:16:21.77,0:16:23.19,Default,,0,0,0,,{\i1}Trai đẹp bên trái!{\i}
Dialogue: 0,0:16:23.77,0:16:27.65,Default,,0,0,0,,{\i1}Rõ ràng là khác hẳn{\i}\N{\i1}với trường cấp hai gần nhà mình!{\i}
Dialogue: 0,0:16:28.65,0:16:34.45,Default,,0,0,0,,{\i1}Nhưng mình thừa hưởng gen của mẹ{\i}\N{\i1}thì mình sẽ không kém ai về nhan sắc.{\i}
Dialogue: 0,0:16:37.53,0:16:38.95,Default,,0,0,0,,{\i1}Đừng để bị choáng ngợp!{\i}
Dialogue: 0,0:16:42.29,0:16:44.08,Default,,0,0,0,,{\i1}Bạn này "khủng" quá!{\i}
Dialogue: 0,0:16:44.17,0:16:46.04,Default,,0,0,0,,NHÌN CHẰM CHẰM
Dialogue: 0,0:16:46.13,0:16:49.25,Default,,0,0,0,,Xin lỗi, tớ không cố ý nhìn cậu chằm chằm.
Dialogue: 0,0:16:50.21,0:16:52.38,Default,,0,0,0,,Tớ đang nghĩ: "Lớp có bạn xinh quá nè".
Dialogue: 0,0:16:52.47,0:16:54.97,Default,,0,0,0,,Khối nghệ thuật chỗ này\Ncó nhiều người đáng nể quá.
Dialogue: 0,0:16:55.55,0:16:57.64,Default,,0,0,0,,Cậu cũng "đáng nể" mà.
Dialogue: 0,0:16:57.72,0:16:58.85,Default,,0,0,0,,Cậu là người mẫu à?
Dialogue: 0,0:16:59.68,0:17:01.77,Default,,0,0,0,,Kiểu kiểu vậy.
Dialogue: 0,0:17:01.85,0:17:05.65,Default,,0,0,0,,Tớ là Kotobuki Minami.\NRất vui được làm quen.
Dialogue: 0,0:17:05.73,0:17:07.81,Default,,0,0,0,,Kotobuki Minami…
Dialogue: 0,0:17:07.90,0:17:10.03,Default,,0,0,0,,Cậu là thần tượng áo tắm!
Dialogue: 0,0:17:10.11,0:17:13.03,Default,,0,0,0,,Google về người khác\Ntrước mặt họ có hơi vô ý tứ không ha?
Dialogue: 0,0:17:13.11,0:17:16.11,Default,,0,0,0,,Trời, cỡ G lận! Gợi cảm quá!
Dialogue: 0,0:17:16.20,0:17:17.32,Default,,0,0,0,,Thôi đi mà!
Dialogue: 0,0:17:17.41,0:17:20.54,Default,,0,0,0,,Tớ chưa từng nghe giọng Kansai bao giờ!\NCậu quê ở Osaka hả?
Dialogue: 0,0:17:20.62,0:17:23.79,Default,,0,0,0,,Không, tớ sinh ra và lớn lên ở Kanagawa.
Dialogue: 0,0:17:23.87,0:17:26.62,Default,,0,0,0,,Tớ nói giọng địa phương cho cá tính thôi.
Dialogue: 0,0:17:26.71,0:17:28.54,Default,,0,0,0,,Giọng Kansai giả sao!
Dialogue: 0,0:17:28.63,0:17:31.34,Default,,0,0,0,,Và thế là em kết bạn với Minami.
Dialogue: 0,0:17:31.42,0:17:32.63,Default,,0,0,0,,Làm quen vậy đó hả?
Dialogue: 0,0:17:32.71,0:17:34.47,Default,,0,0,0,,Xin chào.
Dialogue: 0,0:17:34.55,0:17:37.34,Default,,0,0,0,,Thôi kệ, em có bạn là tốt rồi.
Dialogue: 0,0:17:37.43,0:17:39.10,Default,,0,0,0,,Anh hai, anh tìm được bạn chưa?
Dialogue: 0,0:17:41.14,0:17:45.02,Default,,0,0,0,,Anh không vào trường này để kết bạn.
Dialogue: 0,0:17:45.60,0:17:47.77,Default,,0,0,0,,Tức là không ai thèm chơi với anh rồi.
Dialogue: 0,0:17:48.48,0:17:50.36,Default,,0,0,0,,Xin lỗi vì em chạm trúng nỗi đau.
Dialogue: 0,0:17:50.44,0:17:52.94,Default,,0,0,0,,Anh không cần kể\Ncho em nghe về trường lớp đâu.
Dialogue: 0,0:17:53.03,0:17:55.36,Default,,0,0,0,,Ít ra anh cũng có bạn để nói chuyện mà!
Dialogue: 0,0:17:55.45,0:17:58.36,Default,,0,0,0,,Con trai không kết bạn với nhau ngay.
Dialogue: 0,0:17:58.45,0:18:01.24,Default,,0,0,0,,Khác với khối em,\Nbên anh học nối từ cấp hai lên.
Dialogue: 0,0:18:01.33,0:18:05.41,Default,,0,0,0,,Phần lớn bọn họ có nhóm riêng cả rồi,\Nmuốn kết bạn mới phải từ từ.
Dialogue: 0,0:18:05.50,0:18:08.33,Default,,0,0,0,,Không phải anh cô đơn\Nngay ngày đầu tiên đâu. Rõ chưa?
Dialogue: 0,0:18:08.42,0:18:11.04,Default,,0,0,0,,Hôm nay Aqua nói nhiều hơn thường lệ.
Dialogue: 0,0:18:11.63,0:18:14.71,Default,,0,0,0,,Minami, cậu làm bạn với Aqua nữa nhé?
Dialogue: 0,0:18:15.80,0:18:16.72,Default,,0,0,0,,Được thôi.
Dialogue: 0,0:18:16.80,0:18:18.51,Default,,0,0,0,,Đừng "sang tay" bạn bè như thế.
Dialogue: 0,0:18:19.30,0:18:21.85,Default,,0,0,0,,Kệ anh đi, em cứ lo cho em trước.
Dialogue: 0,0:18:21.93,0:18:24.14,Default,,0,0,0,,Lớp em rất đặc biệt, hẳn phải khác lắm.
Dialogue: 0,0:18:24.72,0:18:26.43,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:18:26.52,0:18:30.90,Default,,0,0,0,,Tớ rất căng thẳng vì bạn bè xung quanh\Ntoàn là dân chuyên nghiệp.
Dialogue: 0,0:18:30.98,0:18:32.65,Default,,0,0,0,,Không cần căng thẳng làm gì!
Dialogue: 0,0:18:32.73,0:18:37.24,Default,,0,0,0,,Đây không phải trường huấn luyện,\Nhay phim trường, chỉ là trường học thôi.
Dialogue: 0,0:18:37.32,0:18:38.91,Default,,0,0,0,,Cư xử bình thường là được.
Dialogue: 0,0:18:38.99,0:18:40.57,Default,,0,0,0,,Ruby…
Dialogue: 0,0:18:40.66,0:18:43.16,Default,,0,0,0,,Sao lời thoại này quen quen?
Dialogue: 0,0:18:43.87,0:18:46.25,Default,,0,0,0,,Anh nhìn qua một vòng lễ khai giảng,
Dialogue: 0,0:18:46.33,0:18:51.29,Default,,0,0,0,,có rất nhiều trai xinh, gái đẹp,\Nnhưng ít ai nổi tiếng với truyền thông.
Dialogue: 0,0:18:51.38,0:18:53.17,Default,,0,0,0,,Không cần lo lắng.
Dialogue: 0,0:18:53.25,0:18:54.55,Default,,0,0,0,,Không…
Dialogue: 0,0:18:54.63,0:18:57.55,Default,,0,0,0,,Có một bạn rất tuyệt vời thật mà.
Dialogue: 0,0:18:58.34,0:19:02.72,Default,,0,0,0,,Các tài liệu học và những thứ liên quan\Nsẽ được bán sau giờ…
Dialogue: 0,0:19:04.14,0:19:05.10,Default,,0,0,0,,Em xin lỗi.
Dialogue: 0,0:19:06.10,0:19:08.69,Default,,0,0,0,,Sáng nay em có buổi quảng bá live show.
Dialogue: 0,0:19:08.77,0:19:11.56,Default,,0,0,0,,Em mong ít nhất cũng\Nđi kịp lễ khai giảng, nhưng…
Dialogue: 0,0:19:11.65,0:19:13.52,Default,,0,0,0,,Shiranui Frill…
Dialogue: 0,0:19:14.11,0:19:15.73,Default,,0,0,0,,Shiranui Frill kìa…
Dialogue: 0,0:19:19.28,0:19:21.49,Default,,0,0,0,,Shiranui Frill đến lớp đó!
Dialogue: 0,0:19:21.99,0:19:23.95,Default,,0,0,0,,Lừng lẫy trong phim bộ tối thứ Hai!
Dialogue: 0,0:19:24.03,0:19:26.83,Default,,0,0,0,,Một nghệ sĩ đa tài\Nvừa biết hát, biết nhảy, lại còn đi diễn!
Dialogue: 0,0:19:26.91,0:19:28.04,Default,,0,0,0,,Nhắc tới "mỹ nhân",
Dialogue: 0,0:19:28.12,0:19:31.37,Default,,0,0,0,,Shiranui Frill là người đầu tiên\Nmọi người nghĩ đến!
Dialogue: 0,0:19:31.96,0:19:36.00,Default,,0,0,0,,Tất nhiên anh biết cậu ta,\Nnhưng không ngờ em mê cậu ta tới vậy.
Dialogue: 0,0:19:36.09,0:19:37.46,Default,,0,0,0,,Hiện giờ, em mê cậu ấy nhất!
Dialogue: 0,0:19:38.97,0:19:42.14,Default,,0,0,0,,Giọng đó là sao? Là Shiranui Frill đó!
Dialogue: 0,0:19:42.22,0:19:43.39,Default,,0,0,0,,Không hứng thú.
Dialogue: 0,0:19:43.47,0:19:46.76,Default,,0,0,0,,Anh đã, đang, và chỉ luôn thích Ai thôi.
Dialogue: 0,0:19:47.56,0:19:49.85,Default,,0,0,0,,Em cũng vậy, nhưng…
Dialogue: 0,0:19:49.93,0:19:52.23,Default,,0,0,0,,Cái này khác, cái kia khác!
Dialogue: 0,0:19:52.31,0:19:55.19,Default,,0,0,0,,Nhìn kìa, là cậu ấy thật đó!
Dialogue: 0,0:19:55.77,0:19:58.53,Default,,0,0,0,,Nhìn từ xa cũng thấy xinh nữa!
Dialogue: 0,0:19:58.61,0:20:00.15,Default,,0,0,0,,Thật tình, em toàn hâm mộ thôi.
Dialogue: 0,0:20:00.24,0:20:01.70,Default,,0,0,0,,Hai người là bạn cùng lớp mà?
Dialogue: 0,0:20:01.78,0:20:03.45,Default,,0,0,0,,Nhưng…
Dialogue: 0,0:20:05.16,0:20:06.87,Default,,0,0,0,,Chào cậu, Shiranui.
Dialogue: 0,0:20:07.87,0:20:10.75,Default,,0,0,0,,Em gái tôi học cùng lớp với cậu.
Dialogue: 0,0:20:10.83,0:20:12.46,Default,,0,0,0,,Hãy giúp đỡ con bé nhé.
Dialogue: 0,0:20:12.54,0:20:14.33,Default,,0,0,0,,Anh hai à!
Dialogue: 0,0:20:15.00,0:20:16.54,Default,,0,0,0,,Tôi biết cậu.
Dialogue: 0,0:20:16.63,0:20:18.05,Default,,0,0,0,,Cậu đóng trong {\i1}Hôm Nay Ngọt Ngào{\i}?
Dialogue: 0,0:20:18.13,0:20:19.51,Default,,0,0,0,,Không ngờ cậu biết phim đó.
Dialogue: 0,0:20:19.59,0:20:21.67,Default,,0,0,0,,Bộ phim cũng không tiếng tăm lắm.
Dialogue: 0,0:20:21.76,0:20:24.80,Default,,0,0,0,,Hôm nọ trên phim trường\Nngười ta bàn về nó, nên tôi có xem.
Dialogue: 0,0:20:25.93,0:20:26.76,Default,,0,0,0,,Đóng hay lắm.
Dialogue: 0,0:20:28.47,0:20:29.47,Default,,0,0,0,,Cảm ơn.
Dialogue: 0,0:20:30.31,0:20:33.77,Default,,0,0,0,,Còn tôi thì từng thấy cậu\Nlên bìa tạp chí {\i1}Middle Jump{\i} rồi.
Dialogue: 0,0:20:33.85,0:20:35.06,Default,,0,0,0,,Cậu là Minami nhỉ?
Dialogue: 0,0:20:35.15,0:20:35.98,Default,,0,0,0,,Đúng rồi!
Dialogue: 0,0:20:36.61,0:20:37.65,Default,,0,0,0,,{\i1}Ghê thật…{\i}
Dialogue: 0,0:20:37.73,0:20:41.11,Default,,0,0,0,,{\i1}Hai người họ đều được{\i}\N{\i1}Shiranui Frill nhận ra!{\i}
Dialogue: 0,0:20:41.19,0:20:43.07,Default,,0,0,0,,Còn cậu là…
Dialogue: 0,0:20:43.15,0:20:44.32,Default,,0,0,0,,Ừ thì…
Dialogue: 0,0:20:44.41,0:20:47.41,Default,,0,0,0,,Xin lỗi, cậu là người của bên nào ấy nhỉ?
Dialogue: 0,0:20:47.49,0:20:49.79,Default,,0,0,0,,Tớ…
Dialogue: 0,0:20:49.87,0:20:52.75,Default,,0,0,0,,hiện tại tớ chưa có hoạt động gì…
Dialogue: 0,0:20:52.83,0:20:53.96,Default,,0,0,0,,Ra vậy.
Dialogue: 0,0:20:54.54,0:20:55.54,Default,,0,0,0,,Vậy thì…
Dialogue: 0,0:20:56.08,0:20:56.96,Default,,0,0,0,,Cố lên nhé?
Dialogue: 0,0:20:57.54,0:21:01.97,Default,,0,0,0,,Cô Miyaemon!\NCho cháu làm thần tượng liền đi!
Dialogue: 0,0:21:02.05,0:21:03.59,Default,,0,0,0,,Đừng hối cô.
Dialogue: 0,0:21:04.26,0:21:08.10,Default,,0,0,0,,Đâu phải cứ muốn lập nhóm thần tượng\Nlà có thể tuyển chọn thành viên ngay.
Dialogue: 0,0:21:08.72,0:21:10.10,Default,,0,0,0,,Nhưng cứ thế này…
Dialogue: 0,0:21:10.68,0:21:13.23,Default,,0,0,0,,Cậu ta chẳng có công việc nào.
Dialogue: 0,0:21:13.31,0:21:14.85,Default,,0,0,0,,Gì chứ? Chỉ là thường dân.
Dialogue: 0,0:21:14.94,0:21:17.44,Default,,0,0,0,,Có người bình thường\Nlẫn trong bọn mình này.
Dialogue: 0,0:21:17.52,0:21:19.36,Default,,0,0,0,,Chỉ là một đứa đu thần tượng phiền phức.
Dialogue: 0,0:21:20.07,0:21:22.11,Default,,0,0,0,,Cứ như vầy, cháu sẽ bị bắt nạt!
Dialogue: 0,0:21:22.69,0:21:27.78,Default,,0,0,0,,Để lập nhóm, cần người chiêu mộ nhân tài\Nvà làm các thủ tục cần thiết đã.
Dialogue: 0,0:21:27.87,0:21:30.49,Default,,0,0,0,,Với lại, đâu dễ mà tìm được\Nnhững cô bé xinh xắn.
Dialogue: 0,0:21:31.49,0:21:35.21,Default,,0,0,0,,Phần lớn các cô tham vọng\Nđều bị các công ty lớn chiêu mộ cả rồi.
Dialogue: 0,0:21:35.29,0:21:40.34,Default,,0,0,0,,Trong lớp cháu có một bạn xinh lắm,\Nngực rất to, tên Kotobuki Minami.
Dialogue: 0,0:21:40.42,0:21:42.67,Default,,0,0,0,,Tức là ở công ty khác còn gì. Không!
Dialogue: 0,0:21:43.34,0:21:45.47,Default,,0,0,0,,Làm người mẫu tự do thì được.
Dialogue: 0,0:21:45.55,0:21:47.89,Default,,0,0,0,,Nhưng cô không muốn\Nmâu thuẫn với công ty khác.
Dialogue: 0,0:21:50.93,0:21:53.10,Default,,0,0,0,,Nếu cần người làm tự do thì có đấy.
Dialogue: 0,0:21:53.77,0:21:57.56,Default,,0,0,0,,Một nghệ sĩ tự do,\Ntuy nổi tiếng nhưng lại ít việc
Dialogue: 0,0:21:58.65,0:22:00.27,Default,,0,0,0,,{\i1}và có dung mạo đáng yêu.{\i}
Dialogue: 0,0:23:35.87,0:23:40.87,Default,,0,0,0,,{\an8}Biên dịch: Duyen Huynh
