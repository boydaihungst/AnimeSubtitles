Dialogue: 0,0:10:10.33,0:10:11.84,SignC2,sign,0000,0000,0000,,{\fnUVF Lobster12\fs75\pos(1780.5,915)}Bạn thân
Dialogue: 0,0:10:11.79,0:10:13.80,Default,chiyo,0000,0000,0000,,Quá trời Suzuki-kun!
Dialogue: 0,0:10:13.80,0:10:17.30,Default,nozaki,0000,0000,0000,,Tất cả đều mang khuôn mặt kiểu tôi ưa vẽ đó.
Dialogue: 0,0:10:17.48,0:10:21.39,MangaSketchDefault,friend,0000,0000,0000,,Mamiko, cuối cùng cũng cặp với thằng Suzuki rồi à!
Dialogue: 0,0:10:21.39,0:10:23.47,MangaSketchDefault,mami,0000,0000,0000,,Trời, đừng có chọc tớ nữa!
Dialogue: 0,0:10:23.47,0:10:26.56,MangaSketchDefault,rival,0000,0000,0000,,Mamiko hợp với tao hơn.
Dialogue: 0,0:10:26.56,0:10:30.10,MangaSketchDefault,sabu,0000,0000,0000,,Tao quyết không nhường Mamiko cho thằng dâm tà như mày đâu!
Dialogue: 0,0:10:30.48,0:10:31.36,MangaSketchDefault,friend,0000,0000,0000,,Tao...
Dialogue: 0,0:10:31.81,0:10:33.90,MangaSketchDefault,friend,0000,0000,0000,,không ngầu như hai đứa bây nhưng...
Dialogue: 0,0:10:34.44,0:10:36.61,MangaSketchDefault,,0000,0000,0000,,tình cảm của tao tuyệt đối không thua ai hết.
Dialogue: 0,0:10:37.24,0:10:40.36,MangaSketchDefault,three,0000,0000,0000,,Nào, Mamiko, cậu chọn ai hả?
Dialogue: 0,0:10:41.24,0:10:42.78,Default,chiyo,0000,0000,0000,,Thế này mà cũng vẽ cho được.
Dialogue: 0,0:10:43.62,0:10:46.37,Default,nozaki,0000,0000,0000,,Mà nhân tiện, Sakura...
Dialogue: 0,0:10:46.37,0:10:50.08,Default,,0000,0000,0000,,Cậu biết ai có thể trở thành nhân vật mẫu cho truyện shoujo không?
Dialogue: 0,0:10:53.00,0:10:54.63,Default,chiyo,0000,0000,0000,,A, có rồi!
Dialogue: 0,0:10:55.88,0:10:59.34,Default,chiyo,0000,0000,0000,,Tớ có một người bạn tên Seo Yuzuki...
Dialogue: 0,0:10:59.88,0:11:00.93,Default,nozaki,0000,0000,0000,,Con gái à?
Dialogue: 0,0:11:01.72,0:11:02.59,Default,chiyo,0000,0000,0000,,Ừm.
Dialogue: 0,0:11:02.59,0:11:05.35,Default,chiyo,0000,0000,0000,,Lúc nào cậu ấy cũng bị người ta rượt theo hết.
Dialogue: 0,0:11:05.35,0:11:07.52,Default,nozaki,0000,0000,0000,,Ô hô, tuýp người nổi tiếng.
Dialogue: 0,0:11:10.69,0:11:13.52,Default - italics,girl,0000,0000,0000,,Không! Đừng lại đây mà!
Dialogue: 0,0:11:13.90,0:11:16.15,Default,chiyo,0000,0000,0000,,Ố, cậu ấy kìa.
Dialogue: 0,0:11:19.19,0:11:21.03,Default,aoiki,0000,0000,0000,,Đứng lại, Seo!
Dialogue: 0,0:11:21.03,0:11:22.66,Default,gym,0000,0000,0000,,Đừng có chạy nữa, Seo!
Dialogue: 0,0:11:22.66,0:11:25.87,Default,aoki,0000,0000,0000,,Hôm nay em đừng hòng chạy thoát!
Dialogue: 0,0:11:29.04,0:11:30.37,Default,aoki,0000,0000,0000,,Mau đứng lại!
Dialogue: 0,0:11:31.54,0:11:33.38,Default,yuzu,0000,0000,0000,,Tôi đâu có ngu!
Dialogue: 0,0:11:37.67,0:11:38.63,Default,gym,0000,0000,0000,,Bắt được rồi!
Dialogue: 0,0:11:41.01,0:11:42.38,Default,teach,0000,0000,0000,,Quát đờ phắc?!
Dialogue: 0,0:11:45.60,0:11:46.93,Default,gym,0000,0000,0000,,Dừng lại cho tôi!
Dialogue: 0,0:11:46.93,0:11:49.02,Default,aoki,0000,0000,0000,,Không được coi thường thầy giáo!
Dialogue: 0,0:11:57.23,0:12:01.49,Default,yuzu,0000,0000,0000,,Chà, mới sáng sớm đã bị mấy ông giáo dí té khói rồi...
Dialogue: 0,0:12:01.49,0:12:02.65,Default,yuzu,0000,0000,0000,,Xui vãi đạn.
Dialogue: 0,0:12:02.65,0:12:04.03,Default,chiyo,0000,0000,0000,,Cậu đã làm gì sao?
Dialogue: 0,0:12:04.03,0:12:05.20,Default,yuzu,0000,0000,0000,,Chẳng biết.
Dialogue: 0,0:12:05.20,0:12:06.74,Default,yuzu,0000,0000,0000,,Tự nhiên mấy ổng nổi đóa chứ bộ.
Dialogue: 0,0:12:06.74,0:12:09.29,Default,chiyo,0000,0000,0000,,Trước đây cậu từng bị rượt đúng hông?
Dialogue: 0,0:12:11.21,0:12:13.67,Default,yuzu,0000,0000,0000,,Ô chẳng phải chú Nozaki lớp B đây sao!
Dialogue: 0,0:12:13.67,0:12:17.29,Default,yuzu,0000,0000,0000,,Người thì cao nên mỗi khi đứng gần y như cục đá cản đường ấy.
Dialogue: 0,0:12:17.29,0:12:19.50,Default,yuzu,0000,0000,0000,,Sao cậu với Chiyo lại—
Dialogue: 0,0:12:20.38,0:12:21.30,Default,yuzu,0000,0000,0000,,Hiểu rồi.
Dialogue: 0,0:12:24.22,0:12:25.55,Default,yuzu,0000,0000,0000,,Lolicon sao!
Dialogue: 0,0:12:25.55,0:12:27.14,Default,yuzu,0000,0000,0000,,Huýttttttt!
Dialogue: 0,0:12:27.30,0:12:28.47,SignA,sign,0000,0000,0000,,{\p1\c&HFAF8F6&\fad(271,1)\fscx193\fscy218\pos(817.5,92.000999)}m 75 0 b 150 0 150 150 75 150 b 0 150 0 0 75 0{\p0}
Dialogue: 0,0:12:27.30,0:12:28.47,SignA,sign,0000,0000,0000,,{\fad(271,1)\an8\pos(960,174)\fnUTM Alberta Heavy}Cáu\N tiết
Dialogue: 0,0:12:28.72,0:12:30.93,Default,girl,0000,0000,0000,,Nhìn nè, nhìn nè, Yuzuki!
Dialogue: 0,0:12:31.73,0:12:34.39,Default,girl,0000,0000,0000,,Tớ cày lưng làm thêm để mua được rồi!
Dialogue: 0,0:12:35.10,0:12:37.06,Default,yuzu,0000,0000,0000,,Ha, tuyệt ghê ta.
Dialogue: 0,0:12:37.73,0:12:40.82,Default,chiyo,0000,0000,0000,,Mọi người dễ nổi giận với Yuzuki lắm.
Dialogue: 0,0:12:40.82,0:12:41.86,Default,chiyo,0000,0000,0000,,Sao vậy nhỉ...
Dialogue: 0,0:12:41.86,0:12:43.07,Default,nozaki,0000,0000,0000,,Hể...
Dialogue: 0,0:12:43.49,0:12:46.07,Default,girl,0000,0000,0000,,Mắc tiền lắm luôn a~
Dialogue: 0,0:12:46.07,0:12:48.08,Default,yuzu,0000,0000,0000,,Hể? Hợp với cậu đó!
Dialogue: 0,0:12:48.41,0:12:49.58,Default,yuzu,0000,0000,0000,,A, nhưng
Dialogue: 0,0:12:50.24,0:12:54.58,Default,yuzu,0000,0000,0000,,Ông hàng xóm nghèo kiết xác gần nhà tớ\N cũng có một cái y chang vầy.
Dialogue: 0,0:12:54.58,0:12:55.58,Default,yuzu,0000,0000,0000,,Thành cặp rồi ha!
Dialogue: 0,0:12:58.09,0:12:59.42,Default,yuzu,0000,0000,0000,,Ể? Khoan—
Dialogue: 0,0:13:00.63,0:13:01.34,Default,chiyo,0000,0000,0000,,Ế?
Dialogue: 0,0:13:01.51,0:13:03.13,Default - italics,nozaki,0000,0000,0000,,Không phải cố tình sao?!
Dialogue: 0,0:13:03.13,0:13:04.63,Default,yuzu,0000,0000,0000,,Đau quá...
Dialogue: 0,0:13:04.63,0:13:05.68,Default,girl,0000,0000,0000,,Yuzuki!
Dialogue: 0,0:13:06.18,0:13:08.26,Default,girl,0000,0000,0000,,Đội bóng rổ nhờ cậu giúp tập luyện với họ kìa.
Dialogue: 0,0:13:08.26,0:13:09.26,Default,yuzu,0000,0000,0000,,Biết rồi!
Dialogue: 0,0:13:10.35,0:13:11.39,Default,nozaki,0000,0000,0000,,Giúp tập luyện ư?
Dialogue: 0,0:13:11.39,0:13:12.27,Default,chiyo,0000,0000,0000,,Ừm.
Dialogue: 0,0:13:12.27,0:13:13.77,Default,nozaki,0000,0000,0000,,Cậu ta giỏi thể thao nhỉ.
Dialogue: 0,0:13:13.77,0:13:16.31,Default,chiyo,0000,0000,0000,,Thế nên mọi CLB đều nhờ cậu ấy giúp hết.
Dialogue: 0,0:13:16.69,0:13:18.02,Default,nozaki,0000,0000,0000,,Hôôô...
Dialogue: 0,0:13:38.83,0:13:41.21,Default,yuzu,0000,0000,0000,,Dôôôô! Tôi sẽ chiến thắng!
Dialogue: 0,0:13:41.21,0:13:43.26,Default,yuzu,0000,0000,0000,,Mặc kệ cái luật lệ gì gì đó!
Dialogue: 0,0:13:43.26,0:13:45.72,Default,yuzu,0000,0000,0000,,Tôi sẽ chơi đến chừng nào bị đuổi thì thôi!
Dialogue: 0,0:13:52.26,0:13:54.56,Default,guy,0000,0000,0000,,Số 13, phạm lỗi!
Dialogue: 0,0:13:54.56,0:13:57.73,Default,chiyo,0000,0000,0000,,Hình như họ đang tập luyện phòng khi gặp đối thủ khó chịu đó.
Dialogue: 0,0:13:57.73,0:14:00.56,Default,nozaki,0000,0000,0000,,Tinh thần thượng võ: zero.
Dialogue: 0,0:14:02.40,0:14:04.23,Default,girl,0000,0000,0000,,Yuzuki! Đây nè! Chuyền đi!
Dialogue: 0,0:14:04.23,0:14:05.53,Default,yuzu,0000,0000,0000,,Tự tôi chơi được rồi!
Dialogue: 0,0:14:07.42,0:14:09.61,Default,girl,0000,0000,0000,,Yuzuki, ngay đây! Tớ đang ở dưới rổ nè!
Dialogue: 0,0:14:09.61,0:14:11.03,Default,yuzu,0000,0000,0000,,Mình tôi sẽ cân hết!
Dialogue: 0,0:14:14.83,0:14:18.29,Default,girl,0000,0000,0000,,Hình như thỉnh thoảng chị chơi hơi ích kỷ nhỉ?
Dialogue: 0,0:14:18.29,0:14:19.67,Default,girl,0000,0000,0000,,Chắc phải ngưng lại thôi.
Dialogue: 0,0:14:20.25,0:14:23.21,Default,girl,0000,0000,0000,,Senpai! Chị hông đến nỗi thế đâu!
Dialogue: 0,0:14:23.21,0:14:26.59,Default,chiyo,0000,0000,0000,,Đây còn là dịp để họ xác thực tính đồng đội nữa.
Dialogue: 0,0:14:27.88,0:14:30.26,Default,guy,0000,0000,0000,,Số 13, ra khỏi sân!
Dialogue: 0,0:14:31.09,0:14:32.76,Default,nozaki,0000,0000,0000,,Đúng là chuẩn ví dụ về sự ích kỷ.
Dialogue: 0,0:14:38.80,0:14:39.48,Default,person,0000,0000,0000,,Seo...
Dialogue: 0,0:14:40.13,0:14:42.25,Default,person,0000,0000,0000,,Em lại đi trễ nữa phải không.
Dialogue: 0,0:14:42.50,0:14:43.48,Default,person,0000,0000,0000,,Hình phạt cho em đây.
Dialogue: 0,0:14:43.48,0:14:44.23,Default,yuzu,0000,0000,0000,,Hở?
Dialogue: 0,0:14:44.23,0:14:46.28,Default,teach,0000,0000,0000,,Đem đống này đến phòng khoa học đi.
Dialogue: 0,0:14:46.28,0:14:47.32,Default,yuzu,0000,0000,0000,,Hểểểể?!
Dialogue: 0,0:14:47.32,0:14:49.40,Default,teach,0000,0000,0000,,A, Nozaki, em cũng đến giúp đi.
Dialogue: 0,0:14:49.40,0:14:50.24,Default,nozaki,0000,0000,0000,,Hể?
Dialogue: 0,0:14:54.13,0:14:57.14,Default,yuzu,0000,0000,0000,,Này... Thôi làm cái mặt kiểu đó đi?
Dialogue: 0,0:14:57.19,0:14:59.46,Default,nozaki,0000,0000,0000,,Ô-Ờ... Xin lỗi.
Dialogue: 0,0:14:59.48,0:15:03.04,Default,yuzu,0000,0000,0000,,"Bỏ bu... bị kẹt với một bạn gái siêu dễ thương.
Dialogue: 0,0:15:03.26,0:15:07.26,Default,,0000,0000,0000,,Hồi hộp đến nỗi không thốt nên lời, sao mày ngu thế con"
Dialogue: 0,0:15:07.26,0:15:09.01,Default,yuzu,0000,0000,0000,,mấy lời đó viết đầy lên mặt cậu kìa.
Dialogue: 0,0:15:09.01,0:15:10.12,SignD,sign,0000,0000,0000,,{\fad(240,1)\pos(1386,613.999512)\fnUTM Alberta Heavy\fs79.5\c&HEB69AB&}Cáu
Dialogue: 0,0:15:10.30,0:15:11.55,Default,yuzu,0000,0000,0000,,Mà cậu biết đó...
Dialogue: 0,0:15:12.09,0:15:14.89,Default,,0000,0000,0000,,Tôi hay lo lắng cho mọi người lắm.
Dialogue: 0,0:15:17.02,0:15:18.98,Default,yuzu,0000,0000,0000,,Lúc nào mọi người cũng đến xin tôi lời khuyên,
Dialogue: 0,0:15:18.98,0:15:20.98,Default,yuzu,0000,0000,0000,,còn nhờ tôi giúp đỡ nữa...
Dialogue: 0,0:15:22.98,0:15:25.36,Default,yuzu,0000,0000,0000,,Tôi luôn ân cần chu đáo,
Dialogue: 0,0:15:26.32,0:15:27.94,Default,yuzu,0000,0000,0000,,lại biết phán đoán tình huống nữa.
Dialogue: 0,0:15:30.99,0:15:32.07,Default,yuzu,0000,0000,0000,,Thế...
Dialogue: 0,0:15:32.91,0:15:34.70,Default,yuzu,0000,0000,0000,,Tôi quá hoàn hảo rồi?
Dialogue: 0,0:15:34.70,0:15:36.16,Default,yuzu,0000,0000,0000,,Phụ nữ "thế kỷ hăm mốt"?!
Dialogue: 0,0:15:36.79,0:15:39.50,Default - italics,nozaki,0000,0000,0000,,Cậu ta... không cố tình thật sao?
Dialogue: 0,0:15:40.16,0:15:42.33,Default,yuzu,0000,0000,0000,,Mà này, cái này nặng đúng hông?
Dialogue: 0,0:15:42.33,0:15:46.04,Default,nozaki,0000,0000,0000,,Um, chuẩn, nặng hơn tôi tưởng.
Dialogue: 0,0:15:46.04,0:15:48.42,Default,yuzu,0000,0000,0000,,Đằng nào cũng phải bưng hết đống này, vậy chơi một trò chơi đi.
Dialogue: 0,0:15:48.42,0:15:49.42,Default,nozaki,0000,0000,0000,,Ờ...
Dialogue: 0,0:15:49.42,0:15:51.51,Default,nozaki,0000,0000,0000,,Ai oẳn tù tì thua thì—
Dialogue: 0,0:15:51.51,0:15:54.01,Default,yuzu,0000,0000,0000,,Người nào đi bằng tay lâu nhất sẽ thắng!
Dialogue: 0,0:15:54.30,0:15:55.22,Default,yuzu,0000,0000,0000,,Được rồi...
Dialogue: 0,0:15:55.22,0:15:56.14,Default,yuzu,0000,0000,0000,,Bắt đầu.
Dialogue: 0,0:15:56.39,0:15:59.22,Default,nozki,0000,0000,0000,,Đứng lại đó! Cậu tính đánh bài chuồn chứ gì?!
Dialogue: 0,0:16:01.06,0:16:03.02,Default,yuzu,0000,0000,0000,,Chết... ông thầy cố vấn Aoki!
Dialogue: 0,0:16:03.02,0:16:04.65,Default,aoki,0000,0000,0000,,Này!
Dialogue: 0,0:16:04.94,0:16:07.15,Default,aoki,0000,0000,0000,,Mau dừng lại, Seo!
Dialogue: 0,0:16:07.15,0:16:09.36,Default,yuzu,0000,0000,0000,,Nozaki, lo đống này dùm tôi.
Dialogue: 0,0:16:09.36,0:16:09.86,Default,nozaki,0000,0000,0000,,Ể?
Dialogue: 0,0:16:09.86,0:16:11.40,Default,yuzu,0000,0000,0000,,Tôi...
Dialogue: 0,0:16:12.49,0:16:15.57,Default,yuzu,0000,0000,0000,,trao cả tính mạng mình vào tay cậu đấy.
Dialogue: 0,0:16:18.41,0:16:20.08,Default,nozaki,0000,0000,0000,,Seo...
Dialogue: 0,0:16:39.85,0:16:42.52,Default - italics,yuzu,0000,0000,0000,,Nhất định, tôi sẽ quay lại đón cậu!
Dialogue: 0,0:16:42.98,0:16:46.61,Default - italics,nozaki,0000,0000,0000,,Ờ... Tôi chờ cậu, Seo!
Dialogue: 0,0:16:53.40,0:16:55.61,Default,chiyo,0000,0000,0000,,Nozaki-kun, cậu đang làm gì đó?
Dialogue: 0,0:16:56.03,0:16:57.74,Default,nozaki,0000,0000,0000,,Ngồi trông cái đống này.
Dialogue: 0,0:16:59.95,0:17:02.91,Default - italics,nozaki,0000,0000,0000,,Dĩ nhiên, còn khuya cậu ta mới quay lại.
Dialogue: 0,0:17:09.29,0:17:12.26,Default,nozaki,0000,0000,0000,,Sakura, tôi biết được tính cách của Seo rồi.
Dialogue: 0,0:17:12.26,0:17:14.93,Default,chiyo,0000,0000,0000,,Hở? Nhưng tớ chưa nói gì mà...
Dialogue: 0,0:17:14.93,0:17:16.30,Default,nozaki,0000,0000,0000,,Không, tôi hiểu rồi.
Dialogue: 0,0:17:17.01,0:17:18.51,Default,,0000,0000,0000,,Cơ bản cậu ta...
Dialogue: 0,0:17:19.10,0:17:20.51,Default,nozaki,0000,0000,0000,,quá tỉnh!
Dialogue: 0,0:17:20.51,0:17:22.60,Default,chiyo,0000,0000,0000,,Ây da, Nozaki-kun...
Dialogue: 0,0:17:22.60,0:17:26.14,Default,chiyo,0000,0000,0000,,Không ai giới thiệu bạn bè bằng cách nói cậu ta tỉnh như ruồi đâu.
Dialogue: 0,0:17:26.37,0:17:29.06,Default,chiyo,0000,0000,0000,,Chưa kể, thế thì nghe không giống\N shoujo manga chút nào đúng không?
Dialogue: 0,0:17:30.48,0:17:31.40,Default,nozaki,0000,0000,0000,,Ừm, ra là thế.
Dialogue: 0,0:17:31.98,0:17:33.15,Default,nozaki,0000,0000,0000,,Vậy thì...
Dialogue: 0,0:17:34.36,0:17:36.70,Default,nozaki,0000,0000,0000,,Một cô gái tỉnh ruồi giỏi thể thao!
Dialogue: 0,0:17:38.20,0:17:41.20,Default,chiyo,0000,0000,0000,,Nozaki-kun, bỏ cái chữ "tỉnh ruồi" đi.
Dialogue: 0,0:17:47.04,0:17:49.67,Default,nozaki,0000,0000,0000,,Làm phiền cậu giúp đỡ, Sakura.
Dialogue: 0,0:17:52.55,0:17:53.51,Default,chiyo,0000,0000,0000,,Hế?
Dialogue: 0,0:17:54.32,0:17:56.51,Default,chiyo,0000,0000,0000,,A... Không sao, không sao!
Dialogue: 0,0:17:57.51,0:18:00.64,Default,nozaki,0000,0000,0000,,Thế rốt cuộc Seo chạy đâu mất rồi?
Dialogue: 0,0:18:00.64,0:18:02.22,Default,chiryo,0000,0000,0000,,Ơ-Ơm...
Dialogue: 0,0:18:02.22,0:18:06.10,Default,chiyo,0000,0000,0000,,A! Ưu điểm nổi bật nhất của Yuzuki là hoạt động CLB đó!
Dialogue: 0,0:18:06.10,0:18:06.98,Default,nozaki,0000,0000,0000,,Câu lạc bộ?
Dialogue: 0,0:18:06.98,0:18:08.60,Default,chiyo,0000,0000,0000,,Mang đậm tính shoujo manga lắm luôn!
Dialogue: 0,0:18:09.02,0:18:13.15,Default,nozaki,0000,0000,0000,,Định nghĩa về shoujo manga của cậu có chút sai lệch nhỉ?
Dialogue: 0,0:18:13.15,0:18:14.69,Default,chiyo,0000,0000,0000,,Hông có đâu...
Dialogue: 0,0:18:14.69,0:18:17.57,Default,chiyo,0000,0000,0000,,Yuzuki còn có biệt danh nữa. Cậu ấy thật sự rất tuyệt!
Dialogue: 0,0:18:17.57,0:18:19.11,Default,nozaki,0000,0000,0000,,Biệt danh à?
Dialogue: 0,0:18:19.78,0:18:23.12,Default,nozaki,0000,0000,0000,,Chắc kiểu như "Thần chết sân bóng rổ" ha.
Dialogue: 0,0:18:23.12,0:18:26.08,Default,chiyo,0000,0000,0000,,Đã bảo là hổng phải mà...
Dialogue: 0,0:18:27.54,0:18:30.54,SignE,sign,0000,0000,0000,,{\fs67.5\move(703.5,522,769.5,567)\bord0\c&H41334F&\frz14.651\frx332\fry322\t(\fs72)}CLB âm nhạc
Dialogue: 0,0:18:31.17,0:18:34.92,Default,nozaki,0000,0000,0000,,Quan trọng hơn là, giọng hát hay thật...
Dialogue: 0,0:18:37.05,0:18:38.26,Default,nozaki,0000,0000,0000,,Giống như...
Dialogue: 0,0:18:38.72,0:18:40.55,Default,nozaki,0000,0000,0000,,giọng hát của thiên thần...
Dialogue: 0,0:19:33.44,0:19:35.90,Default,chiyo,0000,0000,0000,,Cậu ấy chính là "Lorelei của CLB âm nhạc" đó.
Dialogue: 0,0:19:36.98,0:19:38.40,Default,nozaki,0000,0000,0000,,Đúng là lừa tình!
Dialogue: 0,0:19:43.74,0:19:46.41,Default,nozaki,0000,0000,0000,,Hai người cũng khác nhau nhỉ.
Dialogue: 0,0:19:46.41,0:19:48.66,Default,chiyo,0000,0000,0000,,Đúng rồi, cậu nói tớ mới nhận ra...
Dialogue: 0,0:19:48.66,0:19:51.83,Default,nozaki,0000,0000,0000,,Chắc chắn trước khi hai người trở thành bạn
Dialogue: 0,0:19:51.83,0:19:53.79,Default,nozaki,0000,0000,0000,,đã có nhiều chuyện xảy ra...
Dialogue: 0,0:19:56.17,0:19:59.84,Default - flashback,chiyo,0000,0000,0000,,{\i1}Mình... không tài nào hiểu nổi cậu ta...
Dialogue: 0,0:20:13.27,0:20:14.69,Default - flashback,yuzu,0000,0000,0000,,Không tệ...
Dialogue: 0,0:20:14.69,0:20:16.02,Default - flashback,chiyo,0000,0000,0000,,Cậu cũng thế...
Dialogue: 0,0:20:17.40,0:20:20.19,Default,nozaki,0000,0000,0000,,Tình bạn của con gái chỉ toàn đối đầu...
Dialogue: 0,0:20:21.78,0:20:23.45,Default,nozaki,0000,0000,0000,,Tôi hiểu hết rồi.
Dialogue: 0,0:20:25.95,0:20:27.45,Default - italics,chiyo,0000,0000,0000,,Làm sao đây?
Dialogue: 0,0:20:27.45,0:20:30.95,Default - italics,chiyo,0000,0000,0000,,Thật sự là trong lớp mình ngồi kế cậu ấy...
Dialogue: 0,0:22:07.13,0:22:08.34,Default,miko,0000,0000,0000,,Nhân vật mới hở?
Dialogue: 0,0:22:08.34,0:22:12.22,Default,chiyo,0000,0000,0000,,Đúng! Nên tớ đã giới thiệu cô bạn Yuzuki cho cậu ấy!
Dialogue: 0,0:22:12.51,0:22:15.89,Default,chiyo,0000,0000,0000,,Giọng của cậu ấy vừa hay và lúc hát lên cứ như thiên thần ấy.
Dialogue: 0,0:22:16.60,0:22:18.73,Default,chiyo,0000,0000,0000,,Chừng nào Nozaki-kun vẽ xong rồi,
Dialogue: 0,0:22:18.73,0:22:22.11,Default,chiyo,0000,0000,0000,,thể nào cậu ấy cũng là một nhân vật cực kỳ lôi cuốn cho coi.
Dialogue: 0,0:22:24.65,0:22:25.99,Default,chiyo,0000,0000,0000,,Mà cứ nghĩ đến...
Dialogue: 0,0:22:25.99,0:22:28.07,Default,,0000,0000,0000,,thì tớ hơi ghen tị, mặc dù cậu ấy là bạn thân.
Dialogue: 0,0:22:28.82,0:22:30.07,Default,miko,0000,0000,0000,,Hể?
Dialogue: 0,0:22:30.07,0:22:32.53,Default,miko,0000,0000,0000,,Có người con gái tuyệt vậy sao?
Dialogue: 0,0:22:32.99,0:22:36.08,MangaSketchDefault,girl,0000,0000,0000,,Ưm, tớ có chuyện muốn nói với cậu...
Dialogue: 0,0:22:36.08,0:22:39.12,MangaSketchDefault,girl,0000,0000,0000,,Về chuyện của Ryousuke, bạn của cậu...
Dialogue: 0,0:22:39.58,0:22:41.79,MangaSketchDefault,guy,0000,0000,0000,,Mà này, ở đây nóng nhỉ?
Dialogue: 0,0:22:41.79,0:22:43.09,MangaSketchDefault,,0000,0000,0000,,Tớ mở cửa nhé.
Dialogue: 0,0:22:43.80,0:22:45.88,MangaSketchDefault,guy,0000,0000,0000,,Thế, chuyện dài không?
Dialogue: 0,0:22:45.88,0:22:48.17,MangaSketchDefault,guy,0000,0000,0000,,Tớ muốn đi toilet.
Dialogue: 0,0:22:48.47,0:22:50.59,MangaSketchDefault,girl,0000,0000,0000,,{\i1}Chết tiệt! Muốn cho một đấm quá...
Dialogue: 0,0:22:51.64,0:22:53.97,Default - italics,miko,0000,0000,0000,,Chắc không phải người này ha?
Dialogue: 0,0:22:54.56,0:22:57.60,Default,chiyo,0000,0000,0000,,Mà nè, Mikorin có người bạn nào nổi bật không?
Dialogue: 0,0:22:57.60,0:22:58.73,Default,miko,0000,0000,0000,,Tôi ấy à?
Dialogue: 0,0:22:58.73,0:23:01.40,Default,chiyo,0000,0000,0000,,Ừm, người nào làm mẫu cho nhân vật manga được ấy.
Dialogue: 0,0:23:03.31,0:23:04.36,Default,miko,0000,0000,0000,,Này, này...
Dialogue: 0,0:23:04.36,0:23:06.36,Default,miko,0000,0000,0000,,Cưng hỏi ai vậy?
Dialogue: 0,0:23:06.36,0:23:08.07,Default,miko,0000,0000,0000,,Tôi đang ở trước mặt cưng đây...
Dialogue: 0,0:23:08.07,0:23:10.24,Default,miko,0000,0000,0000,,Chàng playboy siêu đẹp trai.
Dialogue: 0,0:23:13.95,0:23:15.83,Default,miko,0000,0000,0000,,S-Sao nhìn tôi kiểu đó?
Dialogue: 0,0:23:15.83,0:23:19.04,Default,miko,0000,0000,0000,,Biết rồi mà! Tôi chỉ muốn thử nói vậy thôi!
Dialogue: 0,0:23:21.75,0:23:23.96,Default,chiyo,0000,0000,0000,,Chà, thật ra...
Dialogue: 0,0:23:24.05,0:23:26.75,MangaSketchDefault,mamiko,0000,0000,0000,,{\i1}Tiêu rồi, mình ngốc quá!
Dialogue: 0,0:23:27.26,0:23:29.05,MangaSketchDefault,mamiko,0000,0000,0000,,{\i1}Xấu hổ quá!
Dialogue: 0,0:23:29.47,0:23:30.63,MangaSketchDefault,guys,0000,0000,0000,,{\i1}Dễ thương vãi!
Dialogue: 0,0:23:33.64,0:23:37.39,Default - italics,chiyo,0000,0000,0000,,Mikorin đúng là khuôn đúc của nữ chính ha...
Dialogue: 0,0:23:40.60,0:23:41.52,Default - margin,guy,0000,0000,0000,,Yo, Nozaki...
Dialogue: 0,0:23:41.52,0:23:43.23,Default - margin,guy,0000,0000,0000,,Tuần tới nhân vật mới sẽ xuất hiện đúng không?
Dialogue: 0,0:23:43.23,0:23:43.90,Default - margin,nozaki,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:23:43.90,0:23:45.40,Default - margin,guy,0000,0000,0000,,Chà, tao chờ lâu rồi đó.
Dialogue: 0,0:23:45.40,0:23:45.98,Default - margin,nozaki,0000,0000,0000,,Thế sao?
Dialogue: 0,0:23:45.98,0:23:48.15,Default - margin,guy,0000,0000,0000,,Dzô, tới bến luôn! Lại đây!
Dialogue: 0,0:23:48.15,0:23:48.82,Default - margin,guy,0000,0000,0000,,Kỳ tới:
Dialogue: 0,0:23:48.82,0:23:50.32,Default - margin,guy,0000,0000,0000,,Bạo Lực Vs. Hoàng Tử.
Dialogue: 0,0:23:50.32,0:23:51.28,Default - margin,guy,0000,0000,0000,,Nhớ đón xem nhé,
Dialogue: 0,0:23:51.28,0:23:53.36,Default - margin,guy,0000,0000,0000,,mấy cô cừu non bé nhỏ.
Dialogue: 0,0:23:53.36,0:23:55.37,Default - margin,,0000,0000,0000,,
