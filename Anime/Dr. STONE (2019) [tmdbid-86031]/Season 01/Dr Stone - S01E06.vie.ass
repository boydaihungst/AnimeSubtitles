Dialogue: 0,0:00:22.52,0:00:26.23,Default,,0,0,0,,Cuối cùng thì mình cũng sống\Nnhư một con người rồi.
Dialogue: 0,0:00:27.65,0:00:29.52,Default,,0,0,0,,Giờ thì,
Dialogue: 0,0:00:29.61,0:00:32.15,Default,,0,0,0,,có vẻ như mình đã đạt đến giới hạn
Dialogue: 0,0:00:32.24,0:00:34.82,Default,,0,0,0,,không lờ đi sự mệt mỏi được.
Dialogue: 0,0:00:39.62,0:00:40.62,Default,,0,0,0,,{\i1}Chết tiệt!{\i0}
Dialogue: 0,0:00:40.70,0:00:43.87,Default,,0,0,0,,{\i1}Mình còn không thể sống sót\Nnếu chỉ có một mình,{\i0}
Dialogue: 0,0:00:43.96,0:00:46.17,Default,,0,0,0,,{\i1}chứ đừng nói đến khoa học và tiến bộ.{\i0}
Dialogue: 0,0:00:47.17,0:00:48.67,Default,,0,0,0,,{\i1}Mình cần sự giúp đỡ{\i0}
Dialogue: 0,0:00:48.75,0:00:50.92,Default,,0,0,0,,{\i1}từ một người khỏe mạnh hơn.{\i0}
Dialogue: 0,0:00:57.72,0:00:59.80,Default,,0,0,0,,{\i1}Mình đã nghĩ tới một người rồi.{\i0}
Dialogue: 0,0:00:59.89,0:01:02.43,Default,,0,0,0,,{\i1}Ngay tại nơi mình hồi sinh,{\i0}
Dialogue: 0,0:01:02.52,0:01:06.10,Default,,0,0,0,,{\i1}có một cánh tay lực lưỡng\Ncủa gã nào đó bị thổi bay đến đây{\i0}
Dialogue: 0,0:01:06.19,0:01:08.27,Default,,0,0,0,,{\i1}từ cùng một hướng với mình.{\i0}
Dialogue: 0,0:01:17.91,0:01:20.99,Default,,0,0,0,,Mình nhìn thấy bản mặt này nhiều\Nđến mức phát ngán luôn rồi.
Dialogue: 0,0:01:22.08,0:01:24.41,Default,,0,0,0,,Đã 3.700 năm rồi nhỉ.
Dialogue: 0,0:01:25.12,0:01:27.25,Default,,0,0,0,,Chào cậu, Cốt Đột.
Dialogue: 0,0:01:28.58,0:01:29.58,Default,,0,0,0,,Giờ thì,
Dialogue: 0,0:01:29.67,0:01:32.17,Default,,0,0,0,,bắt đầu xây dựng\NPhòng Nghiên cứu Senku nào.
Dialogue: 0,0:01:32.80,0:01:34.30,Default,,0,0,0,,Này, Cốt Đột.
Dialogue: 0,0:01:34.38,0:01:37.09,Default,,0,0,0,,Tớ phải làm gì để cậu\Ncũng được hồi sinh đây?
Dialogue: 0,0:01:38.72,0:01:41.51,Default,,0,0,0,,{\i1}Không biết chuyện gì xảy ra\N3.700 năm trước{\i0}
Dialogue: 0,0:01:41.60,0:01:45.02,Default,,0,0,0,,{\i1}mà lại khiến toàn bộ loài người\Nbị thạch hóa nữa.{\i0}
Dialogue: 0,0:01:45.60,0:01:46.52,Default,,0,0,0,,KHOA HỌC VŨ TRỤ XÂM LĂNG
Dialogue: 0,0:01:46.60,0:01:47.48,Default,,0,0,0,,{\i1}Giả thiết đầu tiên.{\i0}
Dialogue: 0,0:01:47.56,0:01:49.90,Default,,0,0,0,,Lũ người Trái Đất này\Nkhiến bọn ta bực rồi đấy.
Dialogue: 0,0:01:49.98,0:01:51.86,Default,,0,0,0,,Biến chúng thành đá hết đi nào.
Dialogue: 0,0:01:51.94,0:01:54.19,Default,,0,0,0,,Những cuộc thử nghiệm trên lũ én\Nđã thành công.
Dialogue: 0,0:01:54.28,0:01:56.24,Default,,0,0,0,,Bắn Tia Thạch hóa nào!
Dialogue: 0,0:01:57.40,0:01:58.74,Default,,0,0,0,,Thật hào hứng!
Dialogue: 0,0:01:59.45,0:02:00.66,Default,,0,0,0,,{\i1}Giả thiết thứ hai.{\i0}
Dialogue: 0,0:02:02.33,0:02:04.95,Default,,0,0,0,,Cuối cùng đã tới lúc sử dụng\Nmáy thạch hóa rồi!
Dialogue: 0,0:02:07.91,0:02:10.29,Default,,0,0,0,,Ôi không! Mình cũng dính luôn rồi!
Dialogue: 0,0:02:10.38,0:02:11.25,Default,,0,0,0,,CHỦNG VI-RÚT MỚI
Dialogue: 0,0:02:11.33,0:02:12.29,Default,,0,0,0,,{\i1}Giả thiết thứ ba.{\i0}
Dialogue: 0,0:02:14.30,0:02:16.30,Default,,0,0,0,,Bọn ta là vi-rút thạch hóa.
Dialogue: 0,0:02:16.38,0:02:19.05,Default,,0,0,0,,Bọn ta chỉ lây cho con người\Nvà chim én thôi.
Dialogue: 0,0:02:20.01,0:02:21.51,Default,,0,0,0,,Thật hào hứng!
Dialogue: 0,0:02:24.01,0:02:26.18,Default,,0,0,0,,{\i1}Chỉ chắc chắn một điều.{\i0}
Dialogue: 0,0:02:26.27,0:02:30.06,Default,,0,0,0,,{\i1}Chỉ có con người\Nvà lũ chim én bị thạch hóa.{\i0}
Dialogue: 0,0:02:31.60,0:02:35.40,Default,,0,0,0,,{\i1}Trông có vẻ như là một viễn cảnh điên rồ,\Nnhưng hẳn phải có quy tắc tiềm ẩn nào đó.{\i0}
Dialogue: 0,0:02:35.90,0:02:38.07,Default,,0,0,0,,{\i1}Tức là mình có thể chống lại nó.{\i0}
Dialogue: 0,0:02:38.57,0:02:40.95,Default,,0,0,0,,{\i1}Tìm hiểu ra quy luật\Nlà nền tảng của khoa học.{\i0}
Dialogue: 0,0:02:42.62,0:02:44.62,Default,,0,0,0,,Mình đang đứng trước mặt
Dialogue: 0,0:02:44.70,0:02:47.83,Default,,0,0,0,,một nhánh chưa được khai phá của khoa học.
Dialogue: 0,0:02:49.33,0:02:51.21,Default,,0,0,0,,Thật hào hứng.
Dialogue: 0,0:02:52.50,0:02:54.29,Default,,0,0,0,,{\i1}Được rồi, suy nghĩ nào.{\i0}
Dialogue: 0,0:02:54.38,0:02:57.17,Default,,0,0,0,,{\i1}Làm sao mình thoát ra được khỏi lớp đá?{\i0}
Dialogue: 0,0:02:57.26,0:02:59.13,Default,,0,0,0,,{\i1}Đơn giản là vì sự thoái hóa sao?{\i0}
Dialogue: 0,0:02:59.63,0:03:02.14,Default,,0,0,0,,{\i1}Nếu mình sống lại là do đá bị thoái hóa,{\i0}
Dialogue: 0,0:03:02.22,0:03:05.64,Default,,0,0,0,,{\i1}thì chẳng phải lẽ ra khí hậu thời tiết\Nđã phá thạch cho mình trước rồi sao?{\i0}
Dialogue: 0,0:03:07.18,0:03:10.18,Default,,0,0,0,,{\i1}Nhưng các bức tượng khác\Ntoàn bộ đều là đá.{\i0}
Dialogue: 0,0:03:10.98,0:03:11.98,Default,,0,0,0,,{\i1}Trường hợp của mình,{\i0}
Dialogue: 0,0:03:12.06,0:03:15.61,Default,,0,0,0,,{\i1}chỉ có bề mặt là đá còn những bộ phận\Nkhác đều biến trở lại thành tế bào sống.{\i0}
Dialogue: 0,0:03:17.36,0:03:19.15,Default,,0,0,0,,{\i1}Không, là ngược lại.{\i0}
Dialogue: 0,0:03:19.24,0:03:22.61,Default,,0,0,0,,{\i1}Bề mặt bị thoái hóa đến nỗi\Nkhông thể biến trở lại thành tế bào sống.{\i0}
Dialogue: 0,0:03:22.70,0:03:24.53,Default,,0,0,0,,{\i1}Thế nên nó mới trở thành một lớp vỏ đá.{\i0}
Dialogue: 0,0:03:25.03,0:03:29.33,Default,,0,0,0,,{\i1}Những phần trên bề mặt mà ít bị thạch hóa\Nhơn đã biến ngược trở lại thành tế bào.{\i0}
Dialogue: 0,0:03:29.91,0:03:33.00,Default,,0,0,0,,{\i1}Vậy nên mới có vài mảng trống\Ntrên các lớp vỏ.{\i0}
Dialogue: 0,0:03:34.29,0:03:39.01,Default,,0,0,0,,{\i1}Vậy mấu chốt của sự hồi sinh của mình\Nkhông phải do thoái hóa,{\i0}
Dialogue: 0,0:03:39.09,0:03:42.09,Default,,0,0,0,,{\i1}mà là do những tác nhân nào đó bên ngoài.{\i0}
Dialogue: 0,0:03:42.68,0:03:46.35,Default,,0,0,0,,{\i1}Các mảnh gần với đầu mình nhất\Nnằm thành đống trên mặt đất.{\i0}
Dialogue: 0,0:03:47.31,0:03:49.89,Default,,0,0,0,,{\i1}Nói cách khác, việc phá thạch\Nbắt đầu từ cái đầu.{\i0}
Dialogue: 0,0:03:55.86,0:03:58.19,Default,,0,0,0,,{\i1}Trong đó hẳn phải có gì đó.{\i0}
Dialogue: 0,0:04:08.91,0:04:10.66,Default,,0,0,0,,Mùi này là…
Dialogue: 0,0:04:11.45,0:04:12.75,Default,,0,0,0,,Axit nitric à?
Dialogue: 0,0:04:14.17,0:04:16.96,Default,,0,0,0,,{\i1}Phần tóc ở gáy vẫn còn bị thạch hóa.{\i0}
Dialogue: 0,0:04:20.05,0:04:21.97,Default,,0,0,0,,{\i1}Thử nghiệm trên chùm tóc\Nhóa thạch này xem.{\i0}
Dialogue: 0,0:05:08.68,0:05:11.89,Default,,0,0,0,,{\i1}Tại sao chỉ có mình được hồi sinh\Nnhờ axit nitric?{\i0}
Dialogue: 0,0:05:12.43,0:05:14.31,Default,,0,0,0,,{\i1}Nó không có tác dụng chút nào{\i0}
Dialogue: 0,0:05:14.39,0:05:17.02,Default,,0,0,0,,{\i1}với Taiju, Yuzuriha, hay bất kỳ ai khác.{\i0}
Dialogue: 0,0:05:17.10,0:05:18.27,Default,,0,0,0,,{\i1}Tại sao?{\i0}
Dialogue: 0,0:05:18.35,0:05:20.90,Default,,0,0,0,,{\i1}Mình khác họ ở điểm gì chứ?{\i0}
Dialogue: 0,0:05:23.11,0:05:24.49,Default,,0,0,0,,{\i1}Nghĩ đi nào.{\i0}
Dialogue: 0,0:05:25.24,0:05:27.16,Default,,0,0,0,,{\i1}Mình chỉ cần có một giả thiết thôi.{\i0}
Dialogue: 0,0:05:27.24,0:05:30.20,Default,,0,0,0,,{\i1}Nghĩ đi.{\i0}
Dialogue: 0,0:05:31.78,0:05:32.70,Default,,0,0,0,,{\i1}Hiểu rồi.{\i0}
Dialogue: 0,0:05:32.79,0:05:34.54,Default,,0,0,0,,{\i1}Bởi vì mình vẫn luôn suy nghĩ.{\i0}
Dialogue: 0,0:05:35.20,0:05:37.08,Default,,0,0,0,,{\i1}Suốt 3.700 năm qua,{\i0}
Dialogue: 0,0:05:37.67,0:05:39.79,Default,,0,0,0,,{\i1}mình chưa từng bị mất ý thức.{\i0}
Dialogue: 0,0:05:40.84,0:05:43.80,Default,,0,0,0,,{\i1}Não tiêu tốn 400 calo một ngày.{\i0}
Dialogue: 0,0:05:44.51,0:05:47.05,Default,,0,0,0,,{\i1}Nhân lượng đó lên với 3.700 năm,{\i0}
Dialogue: 0,0:05:47.13,0:05:48.93,Default,,0,0,0,,{\i1}con số sẽ là hai nghìn tỷ jun.{\i0}
Dialogue: 0,0:05:49.01,0:05:51.30,Default,,0,0,0,,{\i1}Sao mình có được nhiều năng lượng như vậy?{\i0}
Dialogue: 0,0:05:52.18,0:05:55.02,Default,,0,0,0,,{\i1}E=mc².{\i0}
Dialogue: 0,0:05:55.10,0:05:57.89,Default,,0,0,0,,{\i1}Năng lượng và vật chất\Ncó sự trao đổi tương đương.{\i0}
Dialogue: 0,0:05:59.02,0:06:02.40,Default,,0,0,0,,{\i1}Đó là nền tảng của khoa học\Nmà Einstein đã phát triển.{\i0}
Dialogue: 0,0:06:02.98,0:06:06.24,Default,,0,0,0,,{\i1}Dù thế nào năng lượng cũng không thể\Ntự nhiên sinh ra.{\i0}
Dialogue: 0,0:06:07.49,0:06:09.74,Default,,0,0,0,,{\i1}Có gì đó trong lớp đá{\i0}
Dialogue: 0,0:06:09.82,0:06:12.24,Default,,0,0,0,,{\i1}mà mình đã tiêu thụ\Nđể có thể sử dụng não bộ.{\i0}
Dialogue: 0,0:06:12.33,0:06:15.79,Default,,0,0,0,,{\i1}Tức là nếu có thể tìm ra đó là thứ gì,\Nmình có thể hóa giải sự thạch hóa.{\i0}
Dialogue: 0,0:06:17.25,0:06:18.87,Default,,0,0,0,,{\i1}Thử mọi thứ nào.{\i0}
Dialogue: 0,0:06:19.96,0:06:21.88,Default,,0,0,0,,{\i1}Cứ thử hết thôi.{\i0}
Dialogue: 0,0:06:22.46,0:06:24.59,Default,,0,0,0,,{\i1}Mình rất muốn thử nital,{\i0}
Dialogue: 0,0:06:24.67,0:06:27.84,Default,,0,0,0,,{\i1}một loại dung dịch ăn mòn công nghiệp.{\i0}
Dialogue: 0,0:06:28.51,0:06:32.26,Default,,0,0,0,,{\i1}Chết tiệt. Tiếc là không có cồn.{\i0}
Dialogue: 0,0:06:32.35,0:06:33.43,Default,,0,0,0,,{\i1}Phải tin tưởng.{\i0}
Dialogue: 0,0:06:34.06,0:06:36.22,Default,,0,0,0,,{\i1}Thử mọi thứ.{\i0}
Dialogue: 0,0:06:36.31,0:06:39.69,Default,,0,0,0,,{\i1}Thử mọi thứ.{\i0}
Dialogue: 0,0:06:40.35,0:06:42.02,Default,,0,0,0,,{\i1}Tiếp tục thử nghiệm!{\i0}
Dialogue: 0,0:06:45.82,0:06:47.57,Default,,0,0,0,,{\i1}Nhớ rõ,{\i0}
Dialogue: 0,0:06:47.65,0:06:50.66,Default,,0,0,0,,{\i1}dù cho hiện tượng thạch hóa\Ncó hoang đường thế nào,{\i0}
Dialogue: 0,0:06:52.62,0:06:56.37,Default,,0,0,0,,{\i1}nền tảng khoa học sẽ\Nkhông bao giờ bị lung lay!{\i0}
Dialogue: 0,0:07:02.04,0:07:04.13,Default,,0,0,0,,{\i1}Mình cần nhiều nhân lực hơn!{\i0}
Dialogue: 0,0:07:05.59,0:07:08.51,Default,,0,0,0,,Giờ thì ngâm mình trong axit nitric\Nvà tỉnh dậy đi,
Dialogue: 0,0:07:09.09,0:07:10.30,Default,,0,0,0,,tên đần độn.
Dialogue: 0,0:07:11.09,0:07:13.30,Default,,0,0,0,,Tớ biết cậu vẫn còn tỉnh táo trong đó.
Dialogue: 0,0:07:13.39,0:07:15.60,Default,,0,0,0,,Như trong suốt 3.700 năm qua vậy!
Dialogue: 0,0:07:15.68,0:07:18.14,Default,,0,0,0,,Cậu cũng như tớ.
Dialogue: 0,0:07:18.22,0:07:19.98,Default,,0,0,0,,Cậu là người không bao giờ bỏ cuộc!
Dialogue: 0,0:07:23.98,0:07:25.06,Default,,0,0,0,,Senku!
Dialogue: 0,0:07:25.15,0:07:26.40,Default,,0,0,0,,Tớ…
Dialogue: 0,0:07:27.82,0:07:28.94,Default,,0,0,0,,Taiju!
Dialogue: 0,0:07:29.65,0:07:32.41,Default,,0,0,0,,- Tớ tin cậu và sẽ chờ cậu!\N- Tớ tin cậu và sẽ chờ cậu!
Dialogue: 0,0:07:32.49,0:07:34.87,Default,,0,0,0,,- Không có cậu tớ vô vọng!\N- Không có cậu tớ vô vọng!
Dialogue: 0,0:07:35.87,0:07:37.74,Default,,0,0,0,,Trở lại đi, Taiju!
Dialogue: 0,0:07:37.83,0:07:40.37,Default,,0,0,0,,Trở lại đi, Senku!
Dialogue: 0,0:08:20.91,0:08:23.50,Default,,0,0,0,,Tạnh mưa rồi.
Dialogue: 0,0:08:25.71,0:08:28.88,Default,,0,0,0,,Cơn giông giúp cho chúng ta\Nẩn mình đã ngớt rồi.
Dialogue: 0,0:08:29.50,0:08:31.76,Default,,0,0,0,,Nên đừng hét nữa.
Dialogue: 0,0:08:31.84,0:08:34.51,Default,,0,0,0,,Tsukasa mà nghe được là tiêu đấy.
Dialogue: 0,0:08:35.30,0:08:38.30,Default,,0,0,0,,- Cậu nói đúng.\N- Tsukasa sẽ không đến chứ?
Dialogue: 0,0:08:49.15,0:08:52.03,Default,,0,0,0,,Thật bất ngờ là cậu để ý tới cổ tớ đấy.
Dialogue: 0,0:08:52.11,0:08:54.70,Default,,0,0,0,,Tớ còn chẳng cho cậu một dấu hiệu nào cả.
Dialogue: 0,0:08:55.24,0:08:57.45,Default,,0,0,0,,Taiju, Yuzuriha.
Dialogue: 0,0:08:57.53,0:09:00.74,Default,,0,0,0,,Hai người đều được mười tỉ phần trăm điểm.
Dialogue: 0,0:10:42.01,0:10:43.26,Default,,0,0,0,,Sen…
Dialogue: 0,0:10:43.35,0:10:44.56,Default,,0,0,0,,Ku.
Dialogue: 0,0:10:48.31,0:10:50.10,Default,,0,0,0,,Bỏ qua cái dây thần kinh cổ của tớ đi,
Dialogue: 0,0:10:50.19,0:10:52.36,Default,,0,0,0,,cậu vừa nghiền nát cả người tớ rồi!
Dialogue: 0,0:10:52.44,0:10:53.31,Default,,0,0,0,,Tớ sẽ giết cậu!
Dialogue: 0,0:10:59.24,0:11:01.45,Default,,0,0,0,,Chắc giờ này hai người đã biết rồi,
Dialogue: 0,0:11:01.53,0:11:05.03,Default,,0,0,0,,nhưng đừng cảm ơn tớ vì mấy thứ nhỏ nhặt.
Dialogue: 0,0:11:05.12,0:11:06.58,Default,,0,0,0,,Tớ cũng sẽ không cảm ơn đâu.
Dialogue: 0,0:11:07.75,0:11:08.66,Default,,0,0,0,,Ừ.
Dialogue: 0,0:11:09.96,0:11:11.12,Default,,0,0,0,,Chào mừng trở lại,
Dialogue: 0,0:11:11.92,0:11:13.21,Default,,0,0,0,,Senku.
Dialogue: 0,0:11:19.09,0:11:22.09,Default,,0,0,0,,Cậu thấy hoa văn trên miếng da này\Ntrông giống cái tên lửa không?
Dialogue: 0,0:11:22.18,0:11:23.84,Default,,0,0,0,,Xung quanh là các vì sao.
Dialogue: 0,0:11:23.93,0:11:25.81,Default,,0,0,0,,Cậu đi xa quá rồi đấy.
Dialogue: 0,0:11:25.89,0:11:28.97,Default,,0,0,0,,Trông như một lá cờ khoa học vậy.\NTớ cá là nó sẽ rất hợp với Senku,
Dialogue: 0,0:11:29.93,0:11:32.52,Default,,0,0,0,,- Đặt nó lên cổ cậu ấy cho chắc.\N- Tớ hiểu rồi!
Dialogue: 0,0:11:32.60,0:11:34.94,Default,,0,0,0,,Cho thêm thanh nẹp vào còn ổn hơn nữa.\NThấy chưa?
Dialogue: 0,0:11:35.02,0:11:37.27,Default,,0,0,0,,Tớ không cần thứ này tí nào.
Dialogue: 0,0:11:37.94,0:11:40.11,Default,,0,0,0,,Tớ khỏe rồi.
Dialogue: 0,0:11:40.19,0:11:43.99,Default,,0,0,0,,Thí nghiệm tự hy sinh bản thân của\NTiến sĩ Senku đã thành công.
Dialogue: 0,0:11:44.57,0:11:46.58,Default,,0,0,0,,Khả năng tái sinh của sự phá thạch
Dialogue: 0,0:11:46.66,0:11:48.41,Default,,0,0,0,,còn mạnh mẽ hơn tớ tưởng nữa.
Dialogue: 0,0:11:50.41,0:11:53.12,Default,,0,0,0,,Sự thạch hóa khiến chúng ta đau khổ
Dialogue: 0,0:11:53.21,0:11:55.38,Default,,0,0,0,,cũng chính là thứ đã chữa lành cho cậu.
Dialogue: 0,0:11:55.46,0:11:57.88,Default,,0,0,0,,{\i1}Lúc làm xà phòng cậu có nói rồi.{\i0}
Dialogue: 0,0:11:57.96,0:12:00.30,Default,,0,0,0,,Nhưng có lẽ chính sự thạch hóa này
Dialogue: 0,0:12:00.38,0:12:02.80,Default,,0,0,0,,mới là viên đá sự sống\Nmà có thể thay thế cho bác sĩ.
Dialogue: 0,0:12:03.38,0:12:05.22,Default,,0,0,0,,Chính là Thạch Y Sĩ!
Dialogue: 0,0:12:13.85,0:12:15.06,Default,,0,0,0,,{\i1}Phải.{\i0}
Dialogue: 0,0:12:15.15,0:12:17.90,Default,,0,0,0,,{\i1}Nghĩ lại thì nó đúng là tuyệt thật.{\i0}
Dialogue: 0,0:12:18.48,0:12:19.98,Default,,0,0,0,,{\i1}Khi thạch hóa được hóa giải,{\i0}
Dialogue: 0,0:12:20.07,0:12:22.53,Default,,0,0,0,,{\i1}nó cũng chữa lành\Ncho mọi bộ phận xung quanh luôn.{\i0}
Dialogue: 0,0:12:22.61,0:12:25.99,Default,,0,0,0,,{\i1}Thật là một hiện tượng khoa học nhân từ.{\i0}
Dialogue: 0,0:12:27.58,0:12:29.66,Default,,0,0,0,,{\i1}Mình vẫn luôn thắc mắc.{\i0}
Dialogue: 0,0:12:30.74,0:12:33.08,Default,,0,0,0,,{\i1}Ai đã biến nhân loại thành đá{\i0}
Dialogue: 0,0:12:33.87,0:12:35.33,Default,,0,0,0,,{\i1}và ai đã bắt đầu cuộc tấn công?{\i0}
Dialogue: 0,0:12:35.92,0:12:36.79,Default,,0,0,0,,{\i1}Không.{\i0}
Dialogue: 0,0:12:37.71,0:12:41.01,Default,,0,0,0,,{\i1}Có thật nó là một cuộc tấn công không?{\i0}
Dialogue: 0,0:12:46.39,0:12:48.93,Default,,0,0,0,,Vì cổ của Senku có thể lành lại được,
Dialogue: 0,0:12:49.01,0:12:51.39,Default,,0,0,0,,biết đâu ta có thể ghép mấy\Nbức tượng vỡ lại với nhau
Dialogue: 0,0:12:51.47,0:12:55.90,Default,,0,0,0,,và cứu họ bằng cách đổ dung dịch vào.
Dialogue: 0,0:12:55.98,0:12:57.90,Default,,0,0,0,,Tớ đã thử rồi.
Dialogue: 0,0:12:57.98,0:13:00.65,Default,,0,0,0,,Nhưng họ biến thành\Nnhững mảnh xác rời rạc.
Dialogue: 0,0:13:00.73,0:13:03.90,Default,,0,0,0,,Khả năng tái sinh của nó rất mạnh,\Nvậy tại sao…
Dialogue: 0,0:13:08.03,0:13:08.99,Default,,0,0,0,,Yuzuriha.
Dialogue: 0,0:13:11.08,0:13:14.16,Default,,0,0,0,,Tớ chắc mười tỷ phần trăm rằng\NTaiju quá thô kệch với việc này.
Dialogue: 0,0:13:14.25,0:13:17.17,Default,,0,0,0,,Nên tớ chỉ có thể trông cậy\Nvào kỹ năng thủ công của cậu.
Dialogue: 0,0:13:19.34,0:13:21.38,Default,,0,0,0,,Đây là một nhiệm vụ rất khó khăn đấy.
Dialogue: 0,0:13:21.46,0:13:22.76,Default,,0,0,0,,Cậu nghĩ cậu làm được không?
Dialogue: 0,0:13:34.98,0:13:38.19,Default,,0,0,0,,Đó thực sự là một việc hết sức khó khăn,
Dialogue: 0,0:13:38.27,0:13:39.27,Default,,0,0,0,,nhưng tớ sẽ cố.
Dialogue: 0,0:13:40.27,0:13:41.77,Default,,0,0,0,,Cậu trả lời nhanh thật.
Dialogue: 0,0:13:41.86,0:13:43.57,Default,,0,0,0,,Thủ công đòi hỏi kiên nhẫn mà!
Dialogue: 0,0:13:43.65,0:13:45.78,Default,,0,0,0,,Cậu thì thầm cái gì thế?
Dialogue: 0,0:13:45.86,0:13:46.82,Default,,0,0,0,,Đừng bí mật vậy chứ.
Dialogue: 0,0:13:46.90,0:13:48.03,Default,,0,0,0,,Nói tớ đi!
Dialogue: 0,0:13:50.24,0:13:51.16,Default,,0,0,0,,Vấn đề là,
Dialogue: 0,0:13:51.24,0:13:54.33,Default,,0,0,0,,tớ sẽ đi gặp Tsukasa.
Dialogue: 0,0:13:54.41,0:13:57.46,Default,,0,0,0,,Hiểu rồi. Vậy cậu sẽ đi gặp Tsukasa.
Dialogue: 0,0:13:58.67,0:13:59.58,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:13:59.67,0:14:00.96,Default,,0,0,0,,Tại sao chứ?
Dialogue: 0,0:14:01.04,0:14:03.46,Default,,0,0,0,,Hắn đã giết Senku.\NHắn là một kẻ rất nguy hiểm!
Dialogue: 0,0:14:03.55,0:14:04.92,Default,,0,0,0,,Nhưng cậu ấy đâu có chết thật.
Dialogue: 0,0:14:05.01,0:14:06.97,Default,,0,0,0,,Hắn từng là người tốt, nhưng…
Dialogue: 0,0:14:07.05,0:14:10.59,Default,,0,0,0,,Ít ra hắn đã nghĩ đến việc sẽ giết Senku!
Dialogue: 0,0:14:12.05,0:14:15.06,Default,,0,0,0,,Đó chính xác là điều chúng ta\Nđã đạt được trong cuộc chiến đó.
Dialogue: 0,0:14:17.18,0:14:20.98,Default,,0,0,0,,Tsukasa nghĩ rằng tớ đã chết rồi.
Dialogue: 0,0:14:21.06,0:14:25.11,Default,,0,0,0,,Trong khi đó, tớ luôn có thể biết được\NTsukasa đang ở đâu.
Dialogue: 0,0:14:25.19,0:14:27.61,Default,,0,0,0,,Chúng ta sẽ có lợi thế lớn trong trận này.
Dialogue: 0,0:14:28.20,0:14:29.70,Default,,0,0,0,,Đầu tiên, tớ cần hai cậu
Dialogue: 0,0:14:29.78,0:14:33.45,Default,,0,0,0,,làm gián điệp và thâm nhập\Nvào Đế chế Tsukasa.
Dialogue: 0,0:14:36.16,0:14:39.29,Default,,0,0,0,,Tớ đã nói Yuzuriha biết\Nkế hoạch chi tiết rồi.
Dialogue: 0,0:14:39.37,0:14:42.38,Default,,0,0,0,,Taiju, cậu chịu trách nhiệm bảo vệ cô ấy.
Dialogue: 0,0:14:42.46,0:14:45.88,Default,,0,0,0,,Một đứa ngốc như cậu\Nthì biết càng ít càng tốt.
Dialogue: 0,0:14:45.96,0:14:48.88,Default,,0,0,0,,Được, cứ tin ở tớ.
Dialogue: 0,0:14:49.93,0:14:53.01,Default,,0,0,0,,{\i1}Tsukasa định dùng Chất lỏng Kỳ diệu{\i0}
Dialogue: 0,0:14:53.10,0:14:56.27,Default,,0,0,0,,{\i1}để tạo dựng một đội quân\Ngồm những người trẻ{\i0}
Dialogue: 0,0:14:56.35,0:14:59.23,Default,,0,0,0,,{\i1}nhằm tạo ra một thế giới mới\Nkiểm soát bằng sức mạnh quân đội.{\i0}
Dialogue: 0,0:14:59.94,0:15:02.52,Default,,0,0,0,,{\i1}Để lật đổ Đế chế Tsukasa{\i0}
Dialogue: 0,0:15:02.61,0:15:05.86,Default,,0,0,0,,{\i1}và ngăn kế hoạch\Ntiêu diệt loài người của hắn,{\i0}
Dialogue: 0,0:15:06.94,0:15:10.74,Default,,0,0,0,,{\i1}tớ phải thành lập một đội quân cách mạng\Nchiến đấu bằng khoa học.{\i0}
Dialogue: 0,0:15:11.82,0:15:14.58,Default,,0,0,0,,Nhưng cậu định một mình\Nlàm việc đó thế nào?
Dialogue: 0,0:15:14.66,0:15:15.74,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:15:15.83,0:15:19.58,Default,,0,0,0,,Nếu Tsukasa có Chất lỏng Kỳ diệu,\Naxit nitric rồi,
Dialogue: 0,0:15:19.66,0:15:20.96,Default,,0,0,0,,cậu không thể làm thuốc súng
Dialogue: 0,0:15:21.04,0:15:23.50,Default,,0,0,0,,hay gia tăng một thứ quan trọng khác là\Nnhân lực được.
Dialogue: 0,0:15:25.75,0:15:28.55,Default,,0,0,0,,Có một giải pháp cho vấn đề này.
Dialogue: 0,0:15:29.72,0:15:32.76,Default,,0,0,0,,{\i1}Chúng ta sẽ đi tìm những người\Nbí ẩn đã gửi tín hiệu khói{\i0}
Dialogue: 0,0:15:32.84,0:15:35.01,Default,,0,0,0,,{\i1}và hợp tác với họ.{\i0}
Dialogue: 0,0:15:36.64,0:15:41.39,Default,,0,0,0,,{\i1}Vấn đề là có thể\NTsukasa đã tìm ra họ trước tớ rồi.{\i0}
Dialogue: 0,0:15:42.14,0:15:45.06,Default,,0,0,0,,{\i1}Đành phải đánh cược vào khả năng\Nhọ chưa từng gặp nhau vậy.{\i0}
Dialogue: 0,0:15:46.48,0:15:47.57,Default,,0,0,0,,{\i1}Ý cậu là,{\i0}
Dialogue: 0,0:15:47.65,0:15:50.90,Default,,0,0,0,,{\i1}cậu muốn bọn tớ theo dõi Đế chế Tsukasa{\i0}
Dialogue: 0,0:15:50.99,0:15:53.74,Default,,0,0,0,,{\i1}khi cậu tìm đồng minh cho\Nđội quân cách mạng khoa học?{\i0}
Dialogue: 0,0:15:55.53,0:15:57.49,Default,,0,0,0,,{\i1}Vậy mỗi người đều có trận chiến riêng.{\i0}
Dialogue: 0,0:16:00.87,0:16:02.79,Default,,0,0,0,,{\i1}Đúng vậy.{\i0}
Dialogue: 0,0:16:02.87,0:16:06.42,Default,,0,0,0,,{\i1}Nghĩ tới lời tạm biệt bi ai\Nmà tớ muốn rớt nước mắt rồi đây.{\i0}
Dialogue: 0,0:16:09.46,0:16:12.34,Default,,0,0,0,,Cả hai cậu đều tỏ ra thật bình thường\Nvề chuyện này.
Dialogue: 0,0:16:12.42,0:16:15.18,Default,,0,0,0,,Cuộc chia tay giữa đàn ông thật khô khan.
Dialogue: 0,0:16:15.68,0:16:18.72,Default,,0,0,0,,Đúng, đó là vì Senku là người lý trí.
Dialogue: 0,0:16:19.31,0:16:21.89,Default,,0,0,0,,Chúng ta sẽ không gặp cậu ấy\Nmột thời gian.
Dialogue: 0,0:16:21.98,0:16:24.90,Default,,0,0,0,,Có thể mất hàng tuần, thậm chí hàng tháng.
Dialogue: 0,0:16:25.60,0:16:26.61,Default,,0,0,0,,Hay thậm chí…
Dialogue: 0,0:16:44.33,0:16:46.75,Default,,0,0,0,,Senku! Cậu phải…
Dialogue: 0,0:16:47.75,0:16:50.17,Default,,0,0,0,,{\i1}Khoan, mình không được lớn giọng.{\i0}
Dialogue: 0,0:17:10.27,0:17:13.78,Default,,0,0,0,,Cố gắng trụ vững khi không có tớ nhé.
Dialogue: 0,0:17:13.86,0:17:15.40,Default,,0,0,0,,Ý tớ là,
Dialogue: 0,0:17:15.49,0:17:17.82,Default,,0,0,0,,chúng ta đã cùng nhau\Nvượt qua 3.700 năm rồi.
Dialogue: 0,0:17:17.91,0:17:20.87,Default,,0,0,0,,Đợi thêm vài tháng hay vài năm nữa
Dialogue: 0,0:17:20.95,0:17:23.08,Default,,0,0,0,,cũng như một cuộc tản bộ\Ntrong công viên thôi.
Dialogue: 0,0:17:25.04,0:17:29.33,Default,,0,0,0,,Tớ sẽ xây dựng một vương quốc khoa học.
Dialogue: 0,0:17:48.10,0:17:50.36,Default,,0,0,0,,Năm mươi bảy mét từ phía bên phải.
Dialogue: 0,0:17:51.02,0:17:51.94,Default,,0,0,0,,Ừ.
Dialogue: 0,0:17:52.44,0:17:55.15,Default,,0,0,0,,Ngươi đã âm thầm bám theo ta\Ntrong hai phút vừa rồi.
Dialogue: 0,0:17:56.82,0:17:58.16,Default,,0,0,0,,Ngươi là ai?
Dialogue: 0,0:18:09.08,0:18:10.33,Default,,0,0,0,,{\i1}Mắt xanh.{\i0}
Dialogue: 0,0:18:10.83,0:18:11.92,Default,,0,0,0,,{\i1}Cô ta còn trẻ.{\i0}
Dialogue: 0,0:18:12.50,0:18:15.30,Default,,0,0,0,,{\i1}Taiju và những người khác\Nvừa hồi sinh cô ta sao?{\i0}
Dialogue: 0,0:18:15.88,0:18:19.30,Default,,0,0,0,,{\i1}Hay còn cách nào khác\Nđể hồi sinh mọi người nữa?{\i0}
Dialogue: 0,0:18:33.57,0:18:35.73,Default,,0,0,0,,Thô lỗ quá!
Dialogue: 0,0:18:35.82,0:18:37.90,Default,,0,0,0,,Lẽ ra phải chào hỏi trước chứ?
Dialogue: 0,0:18:37.99,0:18:39.40,Default,,0,0,0,,Im đi.
Dialogue: 0,0:18:39.49,0:18:41.41,Default,,0,0,0,,Xuống địa ngục mà chào hỏi!
Dialogue: 0,0:18:56.76,0:18:57.84,Default,,0,0,0,,{\i1}Sao có thể chứ?{\i0}
Dialogue: 0,0:18:57.92,0:19:00.93,Default,,0,0,0,,{\i1}Cô ta còn trẻ,\Nnhưng lại là một chiến binh mạnh mẽ.{\i0}
Dialogue: 0,0:19:01.01,0:19:03.55,Default,,0,0,0,,{\i1}Cộng đồng võ thuật\Nđáng lẽ phải nghe tên cô ta rồi.{\i0}
Dialogue: 0,0:19:03.64,0:19:04.64,Default,,0,0,0,,{\i1}Cô ta là ai vậy?{\i0}
Dialogue: 0,0:19:05.39,0:19:06.77,Default,,0,0,0,,Ta đã thấy mọi chuyện rồi.
Dialogue: 0,0:19:07.35,0:19:08.93,Default,,0,0,0,,{\i1}Ngươi bắt cô gái đó làm con tin{\i0}
Dialogue: 0,0:19:09.02,0:19:11.65,Default,,0,0,0,,{\i1}và sau đó giết anh chàng đó\Nmột cách tàn nhẫn{\i0}
Dialogue: 0,0:19:11.73,0:19:13.06,Default,,0,0,0,,{\i1}người đã đỡ đòn cho cô ấy.{\i0}
Dialogue: 0,0:19:13.98,0:19:15.82,Default,,0,0,0,,Ta không nghe thấy các người nói gì,
Dialogue: 0,0:19:15.90,0:19:18.15,Default,,0,0,0,,nhưng ta không hứng thú\Nvới câu chuyện của ngươi!
Dialogue: 0,0:19:20.65,0:19:23.24,Default,,0,0,0,,Hãy sám hối cho anh pháp sư
Dialogue: 0,0:19:23.32,0:19:25.12,Default,,0,0,0,,cho đến khi linh hồn ngươi mục rữa đi!
Dialogue: 0,0:19:29.33,0:19:30.83,Default,,0,0,0,,Cô vừa nói "pháp sư" sao?
Dialogue: 0,0:19:32.08,0:19:34.92,Default,,0,0,0,,Ngươi quên nhanh thật đấy.
Dialogue: 0,0:19:35.00,0:19:38.67,Default,,0,0,0,,Các ngươi đã khiến ngọn núi giận dữ\Nbằng thứ bột đen đáng ngờ của mình!
Dialogue: 0,0:19:39.34,0:19:40.92,Default,,0,0,0,,{\i1}"Khiến ngọn núi giận dữ?"{\i0}
Dialogue: 0,0:19:42.09,0:19:43.43,Default,,0,0,0,,{\i1}Ý cô ta là vụ nổ sao?{\i0}
Dialogue: 0,0:19:45.39,0:19:46.47,Default,,0,0,0,,{\i1}Hiểu rồi.{\i0}
Dialogue: 0,0:19:46.56,0:19:48.06,Default,,0,0,0,,{\i1}Lẽ nào,{\i0}
Dialogue: 0,0:19:48.14,0:19:50.23,Default,,0,0,0,,{\i1}cô không phải là một người được hồi sinh,{\i0}
Dialogue: 0,0:19:50.31,0:19:52.06,Default,,0,0,0,,{\i1}mà là con cháu của họ?{\i0}
Dialogue: 0,0:19:53.44,0:19:54.61,Default,,0,0,0,,{\i1}Không.{\i0}
Dialogue: 0,0:19:55.52,0:19:56.94,Default,,0,0,0,,Cô thuộc thế hệ nào?
Dialogue: 0,0:20:00.19,0:20:03.61,Default,,0,0,0,,{\i1}Cô ta là một người tinh khiết, nguyên thủy\Nvà không hiểu gì về khoa học.{\i0}
Dialogue: 0,0:20:04.20,0:20:06.28,Default,,0,0,0,,{\i1}Mình có thể cai trị họ dễ dàng{\i0}
Dialogue: 0,0:20:06.37,0:20:07.87,Default,,0,0,0,,{\i1}và giết họ bất kỳ lúc nào.{\i0}
Dialogue: 0,0:20:08.95,0:20:10.58,Default,,0,0,0,,{\i1}Mình không cần đấu với cô ta.{\i0}
Dialogue: 0,0:20:11.08,0:20:12.33,Default,,0,0,0,,{\i1}Nếu đã như vậy,{\i0}
Dialogue: 0,0:20:12.41,0:20:13.96,Default,,0,0,0,,{\i1}điều cần làm bây giờ{\i0}
Dialogue: 0,0:20:14.46,0:20:16.21,Default,,0,0,0,,{\i1}là trở về hang động.{\i0}
Dialogue: 0,0:20:16.96,0:20:18.84,Default,,0,0,0,,{\i1}Phải nhanh chân hơn Taiju và Yuzuriha,{\i0}
Dialogue: 0,0:20:18.92,0:20:20.84,Default,,0,0,0,,{\i1}hai kẻ đã thấy quá trình làm thuốc súng,{\i0}
Dialogue: 0,0:20:21.42,0:20:23.84,Default,,0,0,0,,{\i1}và thâu tóm nguồn sinh ra\NChất lỏng Kỳ diệu.{\i0}
Dialogue: 0,0:20:26.89,0:20:28.39,Default,,0,0,0,,Tạm biệt.
Dialogue: 0,0:21:03.67,0:21:07.51,Default,,0,0,0,,Là anh pháp sư đã bảo vệ cô gái đó.
Dialogue: 0,0:21:08.10,0:21:09.01,Default,,0,0,0,,Anh còn sống sao?
Dialogue: 0,0:21:09.76,0:21:11.10,Default,,0,0,0,,Đừng nói nữa.
Dialogue: 0,0:21:11.18,0:21:14.10,Default,,0,0,0,,Cô có thể tự giới thiệu sau.
Dialogue: 0,0:21:14.18,0:21:16.02,Default,,0,0,0,,Giờ thì giữ sức đi.
Dialogue: 0,0:21:18.15,0:21:19.44,Default,,0,0,0,,Cô trụ được đến tối không?
Dialogue: 0,0:21:21.32,0:21:22.94,Default,,0,0,0,,Nếu không thể trụ được nữa,
Dialogue: 0,0:21:23.03,0:21:25.78,Default,,0,0,0,,tôi sẽ thử thổi bay nó\Nbằng chỗ thuốc súng còn lại.
Dialogue: 0,0:21:25.86,0:21:27.41,Default,,0,0,0,,Nhưng nếu còn trụ được,
Dialogue: 0,0:21:27.49,0:21:31.12,Default,,0,0,0,,dù mất bao lâu, tôi chắc mười tỷ phần trăm\Ncũng sẽ cứu cô ra.
Dialogue: 0,0:21:32.45,0:21:35.58,Default,,0,0,0,,Cô là người duy nhất\Ncó thể quyết định được đấy!
Dialogue: 0,0:21:35.66,0:21:38.21,Default,,0,0,0,,Giờ nói đi, cô chọn gì?
Dialogue: 0,0:21:41.21,0:21:42.09,Default,,0,0,0,,Phải,
Dialogue: 0,0:21:42.17,0:21:43.59,Default,,0,0,0,,nội tạng và xương tôi ổn cả.
Dialogue: 0,0:21:44.17,0:21:45.13,Default,,0,0,0,,Tôi vẫn trụ được.
Dialogue: 0,0:21:59.15,0:22:02.15,Default,,0,0,0,,{\i1}Cái cây đó nặng khoảng một tấn.{\i0}
Dialogue: 0,0:22:02.23,0:22:05.03,Default,,0,0,0,,{\i1}Để nghiêng nó sang một bên\Ncần một nửa lực đó là 500kg.{\i0}
Dialogue: 0,0:22:05.11,0:22:08.11,Default,,0,0,0,,{\i1}Cứ cho là mình nặng hơn 60kg,{\i0}
Dialogue: 0,0:22:08.20,0:22:10.70,Default,,0,0,0,,{\i1}nhân với hai mũ ba để đạt đến 500kg.{\i0}
Dialogue: 0,0:22:10.78,0:22:13.04,Default,,0,0,0,,{\i1}Mình chỉ làm được ba cái.{\i0}
Dialogue: 0,0:22:16.62,0:22:18.96,Default,,0,0,0,,{\i1}Tre chỉ vừa đủ chắc.{\i0}
Dialogue: 0,0:22:19.58,0:22:21.59,Default,,0,0,0,,{\an8\i1}Mình sẽ phải dùng đất nhồi vào.{\i0}
Dialogue: 0,0:22:25.59,0:22:28.97,Default,,0,0,0,,{\an8\i1}Không ngờ xà phòng lại có ích lúc này.{\i0}
Dialogue: 0,0:22:29.05,0:22:31.55,Default,,0,0,0,,{\i1}Một tập hợp siêu phẩm{\i0}
Dialogue: 0,0:22:32.10,0:22:34.60,Default,,0,0,0,,{\i1}gồm những phát minh vĩ đại\Ncủa Tiến sĩ Senku.{\i0}
Dialogue: 0,0:22:37.35,0:22:39.48,Default,,0,0,0,,Anh đang làm gì thế?
Dialogue: 0,0:22:39.56,0:22:40.98,Default,,0,0,0,,Đây là khoa học.
Dialogue: 0,0:22:41.61,0:22:43.98,Default,,0,0,0,,{\i1}Nó được phát minh bởi Archimedes,{\i0}
Dialogue: 0,0:22:44.07,0:22:46.36,Default,,0,0,0,,{\i1}vài trăm năm trước công nguyên.{\i0}
Dialogue: 0,0:22:46.44,0:22:49.40,Default,,0,0,0,,{\i1}Nó biến sức lực yếu đuối{\i0}
Dialogue: 0,0:22:49.49,0:22:51.49,Default,,0,0,0,,{\i1}của học sinh cấp ba\Nthành sức mạnh Hercules.{\i0}
Dialogue: 0,0:22:51.57,0:22:52.57,Default,,0,0,0,,Nó gọi là ròng rọc!
Dialogue: 0,0:23:20.81,0:23:22.19,Default,,0,0,0,,Tuyệt quá.
Dialogue: 0,0:23:23.48,0:23:24.61,Default,,0,0,0,,Không,
Dialogue: 0,0:23:24.69,0:23:27.23,Default,,0,0,0,,tôi không nói về cái trí tuệ\Ncủa Archi hay gì đó.
Dialogue: 0,0:23:28.07,0:23:29.32,Default,,0,0,0,,Tôi đang nói về
Dialogue: 0,0:23:29.90,0:23:33.32,Default,,0,0,0,,cách anh cần cù thúc đẩy bản thân mình\Ntừng bước một
Dialogue: 0,0:23:33.91,0:23:35.58,Default,,0,0,0,,cho đến khi giải quyết được vấn đề.
Dialogue: 0,0:23:39.20,0:23:41.21,Default,,0,0,0,,Tên tôi là Kohaku.
Dialogue: 0,0:23:41.83,0:23:43.50,Default,,0,0,0,,Có vẻ như
Dialogue: 0,0:23:43.58,0:23:46.92,Default,,0,0,0,,tôi thích anh rồi đấy.
Dialogue: 0,0:24:00.93,0:24:02.19,Default,,0,0,0,,ĐÂY LÀ MỘT TÁC PHẨM HƯ CẤU
Dialogue: 0,0:24:02.27,0:24:04.19,Default,,0,0,0,,VẬT LIỆU VÀ CÁCH THỨC\NĐỀU DỰA TRÊN THỰC TẾ
Dialogue: 0,0:24:04.27,0:24:05.40,Default,,0,0,0,,ĐỪNG THỬ VÌ SỰ AN TOÀN CỦA BẠN
Dialogue: 0,0:24:05.48,0:24:06.40,Default,,0,0,0,,Biên dịch: Nguyễn Việt Hưng
