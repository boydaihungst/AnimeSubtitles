Dialogue: 0,0:00:06.51,0:00:09.48,Default,,0,0,0,,LOẠT PHIM CỦA NETFLIX
Dialogue: 0,0:00:15.92,0:00:19.36,Default,,0,0,0,,NGUYÊN TÁC: OSHIKIRI RENSUKE
Dialogue: 0,0:02:05.23,0:02:06.97,Default,,0,0,0,,Tao không đánh nổi cú nào!
Dialogue: 0,0:02:07.09,0:02:08.83,Default,,0,0,0,,Tao sẽ tẩn mày để xả giận!
Dialogue: 0,0:02:08.93,0:02:11.27,Default,,0,0,0,,Làm gì vậy? Thôi đi!
Dialogue: 0,0:02:11.40,0:02:14.57,Default,,0,0,0,,Người lớn mà đánh nhau\Nvì trò chơi điện tử à?
Dialogue: 0,0:02:14.70,0:02:17.40,Default,,0,0,0,,Cái chỗ này đúng\Nlà chốn thô lỗ, Miyao nhỉ?
Dialogue: 0,0:02:17.80,0:02:19.24,Default,,0,0,0,,Ơ?
Dialogue: 0,0:02:20.54,0:02:22.11,Default,,0,0,0,,Cậu là Ono, đúng không?
Dialogue: 0,0:02:22.88,0:02:26.38,Default,,0,0,0,,Cậu chuyển đến trường Minami\Nvào năm lớp chín?
Dialogue: 0,0:02:28.08,0:02:31.62,Default,,0,0,0,,Tớ… Tớ thấy cậu ở đây nhiều lần rồi,
Dialogue: 0,0:02:32.35,0:02:34.59,Default,,0,0,0,,nhưng ta mới nói chuyện lần đầu.
Dialogue: 0,0:02:38.16,0:02:41.20,Default,,0,0,0,,Cậu chơi game thi đấu rất giỏi,\Nđúng không?
Dialogue: 0,0:02:41.43,0:02:42.97,Default,,0,0,0,,Giỏi đến mức tớ còn biết.
Dialogue: 0,0:02:44.63,0:02:46.33,Default,,0,0,0,,{\i1}Mình nói gì vậy trời?{\i0}
Dialogue: 0,0:02:47.87,0:02:50.51,Default,,0,0,0,,{\i1}Nghe nói cậu ấy cực kì trầm lặng.{\i0}
Dialogue: 0,0:02:50.64,0:02:53.01,Default,,0,0,0,,{\i1}Mình chẳng biết nói gì cả.{\i0}
Dialogue: 0,0:02:55.14,0:02:57.54,Default,,0,0,0,,{\i1}Đây là người khiến Yaguchi…{\i0}
Dialogue: 0,0:02:57.64,0:02:58.47,Default,,0,0,0,,Chào!
Dialogue: 0,0:02:58.85,0:03:00.85,Default,,0,0,0,,Lâu rồi không gặp, Hidaka.
Dialogue: 0,0:03:00.91,0:03:03.15,Default,,0,0,0,,Cả cậu nữa, Ono.
Dialogue: 0,0:03:03.25,0:03:06.22,Default,,0,0,0,,Thật ngạc nhiên\Nkhi thấy hai cậu ở quán game.
Dialogue: 0,0:03:06.35,0:03:08.25,Default,,0,0,0,,Hiếm có đến nỗi tớ phải thốt lên.
Dialogue: 0,0:03:08.76,0:03:12.13,Default,,0,0,0,,Lần cuối các cậu gặp nhau\Nlà hôm tốt nghiệp à?
Dialogue: 0,0:03:12.23,0:03:14.23,Default,,0,0,0,,Hidaka, mãi mới nhận ra cậu đấy.
Dialogue: 0,0:03:14.39,0:03:15.49,Default,,0,0,0,,{\i1}Miyao…{\i0}
Dialogue: 0,0:03:15.56,0:03:18.00,Default,,0,0,0,,{\i1}Cậu ấy vì mình nên mới ra bắt chuyện à?{\i0}
Dialogue: 0,0:03:22.74,0:03:27.25,Default,,0,0,0,,Bạn Ono vẫn toát ra vẻ bí ẩn như mọi khi.
Dialogue: 0,0:03:27.51,0:03:28.98,Default,,0,0,0,,{\i1}Mình nói cái khỉ gì vậy?{\i0}
Dialogue: 0,0:03:29.04,0:03:29.94,Default,,0,0,0,,Ono.
Dialogue: 0,0:03:30.48,0:03:33.48,Default,,0,0,0,,Nhân dịp cậu ở đây,\Nđấu với tớ một trận được không?
Dialogue: 0,0:03:36.15,0:03:38.32,Default,,0,0,0,,Thôi, tớ xin can.
Dialogue: 0,0:03:38.45,0:03:39.72,Default,,0,0,0,,Sao lại thế?
Dialogue: 0,0:03:39.95,0:03:45.02,Default,,0,0,0,,Mấy ông người lớn đang vật lộn\Nvà lột quần áo nhau ra kia kìa.
Dialogue: 0,0:03:45.73,0:03:49.10,Default,,0,0,0,,Chắc là hôm nay hai cậu về đi thì hơn.
Dialogue: 0,0:03:49.26,0:03:50.90,Default,,0,0,0,,Chắc… Chắc cậu nói đúng.
Dialogue: 0,0:03:51.06,0:03:51.89,Default,,0,0,0,,Ono!
Dialogue: 0,0:03:52.30,0:03:54.97,Default,,0,0,0,,Là tớ, Doi đây! Cậu có nhớ không?
Dialogue: 0,0:03:55.17,0:03:58.31,Default,,0,0,0,,Hồi tiểu học,\Nbọn mình đã tỏa sáng cùng nhau đấy!
Dialogue: 0,0:03:58.67,0:03:59.67,Default,,0,0,0,,Doi…
Dialogue: 0,0:03:59.84,0:04:02.61,Default,,0,0,0,,Xem này, giờ tớ vẫn tỏa sáng đây.
Dialogue: 0,0:04:03.41,0:04:05.41,Default,,0,0,0,,Vậy là cậu có nhớ tớ.
Dialogue: 0,0:04:05.51,0:04:08.58,Default,,0,0,0,,Đi. Bọn mình chơi gì đi, Ono!
Dialogue: 0,0:04:08.72,0:04:12.32,Default,,0,0,0,,Tớ sẽ thắng kẹo để tặng cậu!
Dialogue: 0,0:04:14.45,0:04:15.72,Default,,0,0,0,,Không lấy được rồi.
Dialogue: 0,0:04:15.86,0:04:18.76,Default,,0,0,0,,Lẽ ra nên bỏ 100 yên\Nmua 10 cái kẹo cho rồi chăng?
Dialogue: 0,0:04:19.13,0:04:21.83,Default,,0,0,0,,Đừng nói thế. Thế thì chán lắm.
Dialogue: 0,0:04:22.00,0:04:24.17,Default,,0,0,0,,Mà đống xèng mày vừa thắng đâu rồi?
Dialogue: 0,0:04:24.30,0:04:26.74,Default,,0,0,0,,Tao nộp hết cả 50.000 xèng cho quán rồi.
Dialogue: 0,0:04:27.67,0:04:30.94,Default,,0,0,0,,{\i1}Nếu Yaguchi đỗ vào học viện Joran,{\i0}
Dialogue: 0,0:04:31.30,0:04:34.64,Default,,0,0,0,,{\i1}quan hệ giữa cậu ấy và Ono{\i0}\N{\i1}sẽ tiến triển thế nào?{\i0}
Dialogue: 0,0:04:35.68,0:04:40.05,Default,,0,0,0,,{\i1}Cậu ấy là người đã khiến Yaguchi{\i0}\N{\i1}nghiêm túc đến mức bỏ game.{\i0}
Dialogue: 0,0:04:42.25,0:04:46.49,Default,,0,0,0,,Ono, nếu tớ thắng,\Ncậu đi xem phim với tớ nhé.
Dialogue: 0,0:04:46.62,0:04:49.36,Default,,0,0,0,,Phim {\i1}Hồn ma nhà xí{\i0}\Nhoặc {\i1}Lời thì thầm trái tim.{\i0}
Dialogue: 0,0:04:49.42,0:04:50.79,Default,,0,0,0,,Chọn phim kiểu gì vậy?
Dialogue: 0,0:04:53.16,0:04:54.13,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:04:54.89,0:04:55.76,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:04:55.96,0:04:59.20,Default,,0,0,0,,Rổ ở xa quá nên khó ném trúng.
Dialogue: 0,0:05:03.37,0:05:04.87,Default,,0,0,0,,Ono này.
Dialogue: 0,0:05:05.81,0:05:08.18,Default,,0,0,0,,Gần đây, cậu có gặp Yaguchi không?
Dialogue: 0,0:05:12.61,0:05:14.61,Default,,0,0,0,,Trúng chính giữa mặt rồi.
Dialogue: 0,0:05:14.95,0:05:18.72,Default,,0,0,0,,Nếu cậu đi một mình\Nthì chắc sẽ ngượng lắm.
Dialogue: 0,0:05:19.35,0:05:22.69,Default,,0,0,0,,Nhưng dù có chút hậu đậu\Nthì cậu vẫn rất duyên dáng.
Dialogue: 0,0:05:23.09,0:05:25.16,Default,,0,0,0,,Cậu nói gì thế, Miyao?
Dialogue: 0,0:05:25.56,0:05:27.93,Default,,0,0,0,,Lỡ cậu ấy gãy mũi hay vỡ răng thì sao?
Dialogue: 0,0:05:28.49,0:05:31.26,Default,,0,0,0,,Cậu chắc chắn là không sao chứ, Ono?
Dialogue: 0,0:05:31.46,0:05:32.49,Default,,0,0,0,,Cậu…
Dialogue: 0,0:05:33.93,0:05:36.67,Default,,0,0,0,,chuyển sang chơi {\i1}Virtua Cop{\i0} à?
Dialogue: 0,0:05:37.74,0:05:41.51,Default,,0,0,0,,Cậu trông có vẻ choáng váng.\NCó lẽ nên về luôn thì hơn.
Dialogue: 0,0:05:44.28,0:05:45.51,Default,,0,0,0,,Tớ sẽ chơi với cậu.
Dialogue: 0,0:05:48.38,0:05:52.42,Default,,0,0,0,,Ôi! Hai cô nàng xinh xắn\Nhợp tác chơi game bắn súng à?
Dialogue: 0,0:05:52.49,0:05:53.52,Default,,0,0,0,,Đúng là đáng xem.
Dialogue: 0,0:05:54.05,0:05:57.02,Default,,0,0,0,,{\i1}Ghê quá. Ghê quá đi mất, Haruo ơi!{\i0}
Dialogue: 0,0:06:02.36,0:06:03.59,Default,,0,0,0,,{\i1}Giỏi quá.{\i0}
Dialogue: 0,0:06:03.90,0:06:07.27,Default,,0,0,0,,{\i1}Mình phải bắn hai, ba phát{\i0}\N{\i1}mới hạ được kẻ địch,{\i0}
Dialogue: 0,0:06:07.37,0:06:09.67,Default,,0,0,0,,{\i1}trong khi Ono luôn chỉ bắn một phát.{\i0}
Dialogue: 0,0:06:10.54,0:06:12.88,Default,,0,0,0,,{\i1}Bình tĩnh, điềm đạm, không cử động thừa.{\i0}
Dialogue: 0,0:06:12.94,0:06:14.17,Default,,0,0,0,,{\i1}Khéo léo thật đấy.{\i0}
Dialogue: 0,0:06:14.44,0:06:16.78,Default,,0,0,0,,{\i1}Tuy hơi khó lại gần,{\i0}
Dialogue: 0,0:06:16.91,0:06:18.51,Default,,0,0,0,,{\i1}nhưng cậu ấy xinh thật.{\i0}
Dialogue: 0,0:06:18.91,0:06:20.91,Default,,0,0,0,,{\i1}Nhưng có vẻ cũng có mặt xấu.{\i0}
Dialogue: 0,0:06:21.58,0:06:23.92,Default,,0,0,0,,{\i1}Mình… muốn biết cậu ấy thật sự nghĩ gì.{\i0}
Dialogue: 0,0:06:24.65,0:06:25.69,Default,,0,0,0,,Ono…
Dialogue: 0,0:06:27.05,0:06:29.22,Default,,0,0,0,,Cậu nghĩ gì về Yaguchi?
Dialogue: 0,0:06:29.96,0:06:31.40,Default,,0,0,0,,Chết rồi!
Dialogue: 0,0:06:31.46,0:06:34.36,Default,,0,0,0,,Ono bắn nhầm một thường dân rồi!
Dialogue: 0,0:06:35.23,0:06:37.17,Default,,0,0,0,,Sau khi trượt học viện Joran,
Dialogue: 0,0:06:37.26,0:06:39.26,Default,,0,0,0,,có vẻ Yaguchi luôn cảm thấy tự ti.
Dialogue: 0,0:06:40.07,0:06:41.20,Default,,0,0,0,,So với cậu.
Dialogue: 0,0:06:41.70,0:06:43.70,Default,,0,0,0,,Chết rồi! Lại bắn nhầm nữa!
Dialogue: 0,0:06:43.87,0:06:45.94,Default,,0,0,0,,Không biết họ đang nói gì nhỉ?
Dialogue: 0,0:06:47.74,0:06:50.51,Default,,0,0,0,,Tớ nghĩ cậu ấy không đến các quán game nữa
Dialogue: 0,0:06:50.64,0:06:53.04,Default,,0,0,0,,là vì sợ phải đối mặt với cậu.
Dialogue: 0,0:06:54.31,0:06:57.41,Default,,0,0,0,,Lần nào đến đây, cậu ấy cũng\Nbồn chồn và đề phòng.
Dialogue: 0,0:06:58.42,0:06:59.39,Default,,0,0,0,,Này…
Dialogue: 0,0:07:00.45,0:07:02.35,Default,,0,0,0,,Nói thật cảm xúc của cậu đi.
Dialogue: 0,0:07:03.16,0:07:06.26,Default,,0,0,0,,Chứ thấy Yaguchi bây giờ, tớ thương lắm.
Dialogue: 0,0:07:06.86,0:07:10.23,Default,,0,0,0,,Nếu cậu không hề để tâm đến cậu ấy…
Dialogue: 0,0:07:10.96,0:07:12.33,Default,,0,0,0,,không có tình cảm…
Dialogue: 0,0:07:13.03,0:07:14.33,Default,,0,0,0,,thì tớ sẽ…
Dialogue: 0,0:07:30.42,0:07:32.22,Default,,0,0,0,,Cậu giỏi thật đấy, Ono ạ!
Dialogue: 0,0:07:33.09,0:07:36.39,Default,,0,0,0,,Tớ không ngờ\Nlà cậu chơi game giỏi đến vậy!
Dialogue: 0,0:07:37.19,0:07:39.96,Default,,0,0,0,,{\i1}Mình chỉ bằng một góc cậu ấy.{\i0}
Dialogue: 0,0:07:40.23,0:07:43.83,Default,,0,0,0,,{\i1}Nhưng không biết nếu đấu game đối kháng{\i0}\N{\i1}thì sẽ thế nào.{\i0}
Dialogue: 0,0:07:44.43,0:07:46.90,Default,,0,0,0,,Vậy… chào nhé.
Dialogue: 0,0:07:47.03,0:07:48.87,Default,,0,0,0,,Cậu đi về cẩn thận nhé, Ono.
Dialogue: 0,0:07:52.47,0:07:54.24,Default,,0,0,0,,{\i1}May mà tình hình yên ổn.{\i0}
Dialogue: 0,0:07:54.37,0:07:57.84,Default,,0,0,0,,{\i1}Sao tao phải lo lắng giúp mày vậy, Haruo?{\i0}
Dialogue: 0,0:07:58.48,0:08:00.48,Default,,0,0,0,,{\i1}Mình làm gì thế này?{\i0}
Dialogue: 0,0:08:00.78,0:08:02.58,Default,,0,0,0,,{\i1}Lần đầu nói chuyện với cậu ấy{\i0}
Dialogue: 0,0:08:02.72,0:08:05.16,Default,,0,0,0,,{\i1}mà lại hỏi thế. Trong khi chơi nữa chứ.{\i0}
Dialogue: 0,0:08:06.79,0:08:07.99,Default,,0,0,0,,Tiểu thư Akira.
Dialogue: 0,0:08:08.55,0:08:13.56,Default,,0,0,0,,Có vẻ lên cấp ba rồi\Nmà em vẫn giữ cái thói quen tệ hại kia.
Dialogue: 0,0:08:14.39,0:08:16.86,Default,,0,0,0,,Là con gái của tập đoàn tài phiệt Ono
Dialogue: 0,0:08:17.00,0:08:20.17,Default,,0,0,0,,mà đến mấy chỗ như thế\Nthì thật không tưởng tượng nổi!
Dialogue: 0,0:08:20.27,0:08:24.17,Default,,0,0,0,,Thưa cô Goda, có thể\Ncô thấy sở thích đó thật gớm ghiếc,
Dialogue: 0,0:08:24.37,0:08:26.81,Default,,0,0,0,,nhưng nó là thú vui nho nhỏ của tiểu thư.
Dialogue: 0,0:08:27.14,0:08:30.24,Default,,0,0,0,,Đó là sở thích duy nhất\Ngiúp tiểu thư thư giãn.
Dialogue: 0,0:08:30.31,0:08:34.68,Default,,0,0,0,,Nếu cô ấy thành ra hư hỏng\Nvà ở đó suốt ngày thì đã khác…
Dialogue: 0,0:08:34.83,0:08:35.70,Default,,0,0,0,,Không.
Dialogue: 0,0:08:35.88,0:08:38.45,Default,,0,0,0,,Đến chỗ hạ cấp đó là không chấp nhận được.
Dialogue: 0,0:08:38.89,0:08:40.49,Default,,0,0,0,,Đó là dấu hiệu của hư hỏng.
Dialogue: 0,0:08:40.62,0:08:43.92,Default,,0,0,0,,Vậy… Vậy thì mong cô xem xét\Nmua máy game cho tiểu thư…
Dialogue: 0,0:08:43.99,0:08:45.59,Default,,0,0,0,,Ông nói nhăng cuội gì vậy?
Dialogue: 0,0:08:45.76,0:08:49.90,Default,,0,0,0,,Ví dụ như PlayStation hoặc Saturn,\Nhoặc máy Virtual Boy sắp ra!
Dialogue: 0,0:08:50.03,0:08:52.33,Default,,0,0,0,,Tôi không biết gì về game cả!
Dialogue: 0,0:08:52.50,0:08:56.64,Default,,0,0,0,,Cô Goda, xin cô,\Nmua Virtual Boy cho tiểu thư đi mà.
Dialogue: 0,0:08:56.74,0:08:58.04,Default,,0,0,0,,Tôi cũng muốn có!
Dialogue: 0,0:08:58.17,0:08:59.01,Default,,0,0,0,,Không được.
Dialogue: 0,0:08:59.27,0:09:00.67,Default,,0,0,0,,Đi mà!
Dialogue: 0,0:09:00.84,0:09:02.07,Default,,0,0,0,,- Xin cô…\N- Đủ rồi!
Dialogue: 0,0:09:06.01,0:09:07.68,Default,,0,0,0,,Cú đá ấy hạ gục tôi rồi.
Dialogue: 0,0:09:07.78,0:09:11.48,Default,,0,0,0,,Tôi, Goda Moemi, gia sư riêng của nhà Ono,
Dialogue: 0,0:09:11.68,0:09:13.95,Default,,0,0,0,,tuyệt đối không nhân nhượng.
Dialogue: 0,0:09:14.12,0:09:20.23,Default,,0,0,0,,Trong những năm cấp ba dễ sa ngã này,\Ntôi sẽ trông chừng Akira thật cẩn thận.
Dialogue: 0,0:09:21.76,0:09:26.57,Default,,0,0,0,,Tôi đã bắt bố mẹ em hứa\Nlà sẽ không cho em dù chỉ một yên.
Dialogue: 0,0:09:26.93,0:09:30.23,Default,,0,0,0,,Dù là trò oẳn tù tì tốn 10 yên,\Nem cũng không được chơi.
Dialogue: 0,0:09:30.40,0:09:31.53,Default,,0,0,0,,Vậy là cô có biết…
Dialogue: 0,0:09:32.31,0:09:34.31,Default,,0,0,0,,Giờ giới nghiêm là bốn giờ chiều.
Dialogue: 0,0:09:34.44,0:09:36.44,Default,,0,0,0,,Học xong, em phải về thẳng nhà.
Dialogue: 0,0:09:36.74,0:09:40.04,Default,,0,0,0,,Thế thì cô ấy không có thời gian\Nchơi với bạn mất…
Dialogue: 0,0:09:40.21,0:09:42.98,Default,,0,0,0,,Không sao. Càng tốt.
Dialogue: 0,0:09:43.25,0:09:45.92,Default,,0,0,0,,Nói chuyện ở trường là quá đủ rồi.
Dialogue: 0,0:09:46.42,0:09:49.59,Default,,0,0,0,,Quan hệ tình cảm với con trai\Nlại càng cấm.
Dialogue: 0,0:09:49.86,0:09:54.57,Default,,0,0,0,,Khi em đã tốt nghiệp cấp ba\Nvà theo học một trường đại học hàng đầu,
Dialogue: 0,0:09:54.76,0:09:58.13,Default,,0,0,0,,em sẽ cưới một người do bố mẹ chỉ dịnh.
Dialogue: 0,0:09:58.76,0:10:02.93,Default,,0,0,0,,Đó là ý muốn của bố mẹ em!
Dialogue: 0,0:10:08.57,0:10:11.01,Default,,0,0,0,,Nằm thế này mà mình đã qua 100 cửa rồi.
Dialogue: 0,0:10:11.14,0:10:14.34,Default,,0,0,0,,Mình thấy mình đã lấy lại căn bản\Nvà còn hơn thế nữa.
Dialogue: 0,0:10:15.08,0:10:20.09,Default,,0,0,0,,Nhưng nhìn ngược quen rồi, có khi\Nchơi trò khác lại bị tác dụng ngược.
Dialogue: 0,0:10:20.25,0:10:21.35,Default,,0,0,0,,Thôi vậy.
Dialogue: 0,0:10:21.52,0:10:26.79,Default,,0,0,0,,Mình đã mượn được cục cưng Neo Geo CD này\Ntừ thằng Kobayashi nhà giàu cùng lớp.
Dialogue: 0,0:10:27.13,0:10:31.13,Default,,0,0,0,,Có nó, mình tập ở nhà bao nhiêu cũng được.
Dialogue: 0,0:10:31.70,0:10:36.74,Default,,0,0,0,,Mình mà được tập thỏa thích ở nhà mà\Nkhông cần sợ hết tiền thì sẽ thế nào đây?
Dialogue: 0,0:10:37.27,0:10:40.31,Default,,0,0,0,,Sức mạnh siêu phàm của mình\Nsẽ làm cô ấy ngỡ ngàng.
Dialogue: 0,0:10:40.37,0:10:43.57,Default,,0,0,0,,Chắc chắn Hidaka cũng sẽ sốc đến ngất xỉu.
Dialogue: 0,0:10:50.27,0:10:54.69,Default,,0,0,0,,ĐANG TẢI\NXIN CHỜ
Dialogue: 0,0:11:03.10,0:11:04.44,Default,,0,0,0,,Hắt xì!
Dialogue: 0,0:11:47.51,0:11:49.01,Default,,0,0,0,,Tốn thời gian quá!
Dialogue: 0,0:12:00.32,0:12:03.56,Default,,0,0,0,,Là con nhà Ono,\Nem phải hoàn thành nghĩa vụ của mình.
Dialogue: 0,0:12:03.82,0:12:05.12,Default,,0,0,0,,Chấp nhận đi.
Dialogue: 0,0:12:05.66,0:12:08.06,Default,,0,0,0,,{\i1}Em không được có cuộc sống riêng!{\i0}
Dialogue: 0,0:12:08.96,0:12:13.36,Default,,0,0,0,,Có vẻ Yaguchi cảm thấy tự ti so với cậu.
Dialogue: 0,0:12:14.83,0:12:17.20,Default,,0,0,0,,{\i1}Nói thật cảm xúc của cậu đi.{\i0}
Dialogue: 0,0:12:35.37,0:12:41.98,Default,,0,0,0,,CÔ NÀNG BẤT BẠI
Dialogue: 0,0:12:43.03,0:12:49.40,Default,,0,0,0,,THÁNG 7 NĂM 1995
Dialogue: 0,0:12:53.67,0:12:55.31,Default,,0,0,0,,{\i1}Cô ấy cũng không ở đây.{\i0}
Dialogue: 0,0:12:56.78,0:13:00.05,Default,,0,0,0,,{\i1}Mình lấy lại được cảm giác{\i0}\N{\i1}và tự tin được một tuần rồi.{\i0}
Dialogue: 0,0:13:00.21,0:13:03.65,Default,,0,0,0,,{\i1}Tìm khắp mọi quán game{\i0}\N{\i1}và tiệm kẹo mình nghĩ đến rồi,{\i0}
Dialogue: 0,0:13:03.82,0:13:06.16,Default,,0,0,0,,{\i1}mà vẫn không thấy Ono.{\i0}
Dialogue: 0,0:13:07.09,0:13:10.03,Default,,0,0,0,,{\i1}Mãi mình mới đủ dũng khí gặp cô ấy mà,{\i0}
Dialogue: 0,0:13:10.19,0:13:11.76,Default,,0,0,0,,{\i1}thế này là sao nhỉ?{\i0}
Dialogue: 0,0:13:12.83,0:13:17.64,Default,,0,0,0,,{\i1}Hồi trước thì mình luôn thấy{\i0}\N{\i1}xe nhà cô ấy đỗ trước quán game.{\i0}
Dialogue: 0,0:13:18.90,0:13:20.87,Default,,0,0,0,,TRẬN ĐẤU KẾT THÚC
Dialogue: 0,0:13:21.57,0:13:22.97,Default,,0,0,0,,{\i1}Toàn thắng 21 trận.{\i0}
Dialogue: 0,0:13:23.60,0:13:26.24,Default,,0,0,0,,{\i1}Có vẻ cậu ấy lấy lại phong độ rồi.{\i0}
Dialogue: 0,0:13:27.07,0:13:28.57,Default,,0,0,0,,Thấy chưa, Hidaka?
Dialogue: 0,0:13:28.67,0:13:33.48,Default,,0,0,0,,Tớ đã hoàn toàn trở lại sau khi tập lại\Nbằng {\i1}Yie Ar Kung-Fu{\i0} như cậu nói.
Dialogue: 0,0:13:34.01,0:13:35.91,Default,,0,0,0,,Nhờ tập bằng máy Neo Geo CD,
Dialogue: 0,0:13:35.98,0:13:39.42,Default,,0,0,0,,tớ không chỉ rèn được kỹ năng\Nmà còn có cả sự kiên nhẫn.
Dialogue: 0,0:13:40.12,0:13:41.45,Default,,0,0,0,,Nhờ chờ nó tải game.
Dialogue: 0,0:13:41.59,0:13:42.79,Default,,0,0,0,,Chờ tải game?
Dialogue: 0,0:13:43.29,0:13:47.23,Default,,0,0,0,,Tớ sẽ đáp trả\Nnỗi hổ thẹn mà cậu đã cho tớ nếm trải.
Dialogue: 0,0:13:47.33,0:13:49.87,Default,,0,0,0,,Sau đó, tớ sẽ tiến xa hơn nữa.
Dialogue: 0,0:13:50.10,0:13:52.30,Default,,0,0,0,,Nào, đấu đi.
Dialogue: 0,0:13:52.40,0:13:56.34,Default,,0,0,0,,Trình độ siêu phàm của tớ\Nsẽ khiến cậu ho ra máu đến ngất xỉu…
Dialogue: 0,0:13:56.64,0:13:57.74,Default,,0,0,0,,Tớ không muốn.
Dialogue: 0,0:13:57.94,0:13:58.84,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:13:58.94,0:14:00.71,Default,,0,0,0,,Không phải tớ sợ thua,
Dialogue: 0,0:14:01.01,0:14:03.75,Default,,0,0,0,,mà tớ muốn giữ ngôi vô địch này\Nthêm ít lâu.
Dialogue: 0,0:14:03.81,0:14:05.25,Default,,0,0,0,,Chơi xấu quá, Hidaka!
Dialogue: 0,0:14:05.34,0:14:08.28,Default,,0,0,0,,{\i1}Cậu nói "tiến xa hơn"{\i0}\N{\i1}là muốn ám chỉ Ono chứ gì?{\i0}
Dialogue: 0,0:14:09.05,0:14:11.59,Default,,0,0,0,,Hôm nay tớ chỉ muốn đứng xem thôi.
Dialogue: 0,0:14:11.78,0:14:15.78,Default,,0,0,0,,Vậy hả? Vậy thì xem tớ bất bại 100 trận\Nrồi co rúm lại sợ hãi đi.
Dialogue: 0,0:14:16.22,0:14:17.25,Default,,0,0,0,,Á, trúng đòn rồi.
Dialogue: 0,0:14:24.16,0:14:26.70,Default,,0,0,0,,Cháu chăm chỉ thật đấy, Yaguchi ạ.
Dialogue: 0,0:14:26.93,0:14:29.03,Default,,0,0,0,,Cháu muốn mua thứ gì à?
Dialogue: 0,0:14:29.20,0:14:30.60,Default,,0,0,0,,Virtual Boy ạ.
Dialogue: 0,0:14:30.70,0:14:31.90,Default,,0,0,0,,Vớ chân á?
Dialogue: 0,0:14:36.58,0:14:38.35,Default,,0,0,0,,{\i1}Chẳng lẽ…{\i0}
Dialogue: 0,0:14:38.64,0:14:39.88,Default,,0,0,0,,{\i1}cô ấy chán game rồi?{\i0}
Dialogue: 0,0:14:40.25,0:14:41.32,Default,,0,0,0,,Này, Haruo.
Dialogue: 0,0:14:41.88,0:14:44.52,Default,,0,0,0,,Nghỉ hè này đi xem phim với mẹ không?
Dialogue: 0,0:14:44.58,0:14:45.85,Default,,0,0,0,,Phim {\i1}Trường học Ma ám.{\i0}
Dialogue: 0,0:14:46.29,0:14:47.79,Default,,0,0,0,,Vâng.
Dialogue: 0,0:14:48.75,0:14:51.75,Default,,0,0,0,,{\i1}The King of Fighters '95 sắp ra rồi.{\i0}
Dialogue: 0,0:14:52.16,0:14:54.70,Default,,0,0,0,,{\i1}Nghe nói {\i0}Tekken{\i1} cũng sẽ ra mắt{\i0}\N{\i1}vào tháng 8.{\i0}
Dialogue: 0,0:14:57.53,0:15:00.07,Default,,0,0,0,,{\i1}Biết bao nhiêu game hay sắp ra,{\i0}
Dialogue: 0,0:15:01.17,0:15:02.64,Default,,0,0,0,,{\i1}mà Ono đang nghĩ gì vậy?{\i0}
Dialogue: 0,0:15:05.70,0:15:07.70,Default,,0,0,0,,{\i1}Cô ấy gặp chuyện gì ở nhà sao?{\i0}
Dialogue: 0,0:15:08.54,0:15:10.54,Default,,0,0,0,,{\i1}Mất tinh thần quá.{\i0}
Dialogue: 0,0:15:11.48,0:15:15.15,Default,,0,0,0,,{\i1}Bấy lâu nay mình làm cái khỉ gì vậy?{\i0}
Dialogue: 0,0:15:15.35,0:15:17.05,Default,,0,0,0,,{\i1}Nào là "không xứng gặp".{\i0}
Dialogue: 0,0:15:17.12,0:15:18.82,Default,,0,0,0,,{\i1}Rồi còn "tập lại từ đầu".{\i0}
Dialogue: 0,0:15:20.15,0:15:24.05,Default,,0,0,0,,{\i1}Sao mình cứ lặp đi lặp lại{\i0}\N{\i1}một sai lầm thế này?{\i0}
Dialogue: 0,0:15:40.64,0:15:41.51,Default,,0,0,0,,Ơ kìa.
Dialogue: 0,0:15:42.61,0:15:44.10,Default,,0,0,0,,Cậu Yaguchi.
Dialogue: 0,0:15:44.68,0:15:46.08,Default,,0,0,0,,Là ông quản gia đây mà.
Dialogue: 0,0:15:46.15,0:15:48.99,Default,,0,0,0,,Lâu rồi không gặp cậu.
Dialogue: 0,0:15:49.08,0:15:51.38,Default,,0,0,0,,Ơ? Ông đi một mình ạ?
Dialogue: 0,0:15:51.48,0:15:54.88,Default,,0,0,0,,Nếu cậu hỏi vậy\Nthì hẳn là tiểu thư cũng không ở đây rồi.
Dialogue: 0,0:15:56.59,0:15:58.49,Default,,0,0,0,,Sao? Ono bỏ nhà đi à?
Dialogue: 0,0:15:58.82,0:16:03.83,Default,,0,0,0,,Vâng, gần đây cô ấy bị kèm cặp kĩ quá\Nnên đã bỏ nhà đi.
Dialogue: 0,0:16:04.23,0:16:05.12,Default,,0,0,0,,Kèm cặp?
Dialogue: 0,0:16:05.50,0:16:09.47,Default,,0,0,0,,Cô ấy bị đặt giờ giới nghiêm\Nlà 4:00 chiều, học xong phải về ngay.
Dialogue: 0,0:16:09.70,0:16:13.07,Default,,0,0,0,,Cô ấy không được đến\Nmấy chỗ ưa thích như trước.
Dialogue: 0,0:16:13.41,0:16:17.06,Default,,0,0,0,,Ngày qua ngày,\Ntiểu thư chẳng có mấy thời gian để thở.
Dialogue: 0,0:16:17.38,0:16:20.88,Default,,0,0,0,,Tôi đã lo là sẽ xảy ra chuyện này mà.
Dialogue: 0,0:16:21.01,0:16:23.01,Default,,0,0,0,,"Liệu cô ấy có bỏ nhà đi không?
Dialogue: 0,0:16:23.15,0:16:26.75,Default,,0,0,0,,Trời ơi, không ổn rồi.\NTình hình tệ quá, dễ sợ quá".
Dialogue: 0,0:16:28.32,0:16:30.72,Default,,0,0,0,,{\i1}Sáng nay, đột nhiên cô ấy biến mất,{\i0}
Dialogue: 0,0:16:30.92,0:16:32.92,Default,,0,0,0,,{\i1}mà giờ đã gần tối rồi.{\i0}
Dialogue: 0,0:16:33.13,0:16:34.97,Default,,0,0,0,,{\i1}Tiểu thư không cầm theo gì cả.{\i0}
Dialogue: 0,0:16:35.23,0:16:37.23,Default,,0,0,0,,{\i1}Chắc cô ấy cũng gần hết tiền rồi.{\i0}
Dialogue: 0,0:16:37.40,0:16:40.20,Default,,0,0,0,,{\i1}Tôi lo cho tiểu thư đến phát điên mất.{\i0}
Dialogue: 0,0:16:40.93,0:16:45.57,Default,,0,0,0,,{\i1}Có vẻ vào cấp ba rồi,{\i0}\N{\i1}cô ấy cũng vẫn không làm bạn được với ai.{\i0}
Dialogue: 0,0:16:45.80,0:16:48.44,Default,,0,0,0,,{\i1}Tôi chỉ còn biết tìm đến cậu.{\i0}
Dialogue: 0,0:16:49.24,0:16:53.75,Default,,0,0,0,,{\i1}Cậu có biết tiểu thư có thể đi đâu không?{\i0}
Dialogue: 0,0:16:54.65,0:16:58.52,Default,,0,0,0,,{\i1}Chỗ nào mà cô ấy có kỉ niệm gì đó?{\i0}
Dialogue: 0,0:16:59.85,0:17:00.98,Default,,0,0,0,,{\i1}Không được…{\i0}
Dialogue: 0,0:17:01.09,0:17:03.89,Default,,0,0,0,,{\i1}Sao lại nghĩ đến{\i0}\N{\i1}sân rào lưới mắt cáo của Andre?{\i0}
Dialogue: 0,0:17:04.46,0:17:06.03,Default,,0,0,0,,{\i1}Cũng không phải địa ngục!{\i0}
Dialogue: 0,0:17:06.63,0:17:08.37,Default,,0,0,0,,{\i1}Mình chẳng nghĩ ra gì cả!{\i0}
Dialogue: 0,0:17:08.49,0:17:11.33,Default,,0,0,0,,{\i1}Chỉ nghĩ ra mấy chỗ không có thật!{\i0}
Dialogue: 0,0:17:12.87,0:17:15.67,Default,,0,0,0,,{\i1}Mấy chỗ cô ấy sẽ đến phải là…{\i0}
Dialogue: 0,0:17:17.30,0:17:21.04,Default,,0,0,0,,{\i1}Mình tìm hết quán game khu này rồi,{\i0}\N{\i1}nên chắc cô ấy không ở đó.{\i0}
Dialogue: 0,0:17:21.81,0:17:26.18,Default,,0,0,0,,{\i1}Cô ấy sẽ không ngốc đến mức{\i0}\N{\i1}đến chỗ nào mà ông quản gia tìm được.{\i0}
Dialogue: 0,0:17:27.78,0:17:30.98,Default,,0,0,0,,{\i1}Quả là giờ không phải lúc tập luyện mà.{\i0}
Dialogue: 0,0:17:31.42,0:17:33.42,Default,,0,0,0,,{\i1}Nếu mình đi gặp cô ấy sớm hơn…{\i0}
Dialogue: 0,0:17:34.35,0:17:35.25,Default,,0,0,0,,{\i1}Không…{\i0}
Dialogue: 0,0:17:35.59,0:17:38.33,Default,,0,0,0,,{\i1}Có thể Ono muốn ở một mình.{\i0}
Dialogue: 0,0:17:38.49,0:17:40.36,Default,,0,0,0,,{\i1}Thế thì mình mà đi tìm là dở.{\i0}
Dialogue: 0,0:17:41.29,0:17:43.59,Default,,0,0,0,,{\i1}Không khéo lại bị xem là nhiều chuyện…{\i0}
Dialogue: 0,0:17:44.26,0:17:49.87,Default,,0,0,0,,{\i1}Với cả mình cũng có can thiệp được gì{\i0}\N{\i1}vào chuyện nhà Ono đâu.{\i0}
Dialogue: 0,0:17:50.30,0:17:54.34,Default,,0,0,0,,Cậu là người bạn duy nhất\Ncủa tiểu thư đấy, cậu trai!
Dialogue: 0,0:17:54.57,0:17:59.68,Default,,0,0,0,,Giờ cô ấy bỏ nhà đi\Nmà cậu lại cắm đầu chơi Virtual Boy à?
Dialogue: 0,0:18:01.41,0:18:03.95,Default,,0,0,0,,{\i1}Mình vẫn còn chưa đến vài chỗ.{\i0}
Dialogue: 0,0:18:04.52,0:18:07.76,Default,,0,0,0,,{\i1}Ví dụ như mấy khu nhiều quán game{\i0}\N{\i1}nhưng ở xa.{\i0}
Dialogue: 0,0:18:08.35,0:18:12.02,Default,,0,0,0,,{\i1}Một nơi mà cô ấy sẽ đến{\i0}\N{\i1}nếu không có nhiều tiền.{\i0}
Dialogue: 0,0:18:12.56,0:18:13.39,Default,,0,0,0,,KAWASAKI
Dialogue: 0,0:18:13.49,0:18:14.66,Default,,0,0,0,,{\i1}Phải là chỗ này.{\i0}
Dialogue: 0,0:18:15.73,0:18:18.13,Default,,0,0,0,,{\i1}Bọn mình cũng từng đến đây một lần rồi.{\i0}
Dialogue: 0,0:18:18.63,0:18:21.47,Default,,0,0,0,,{\i1}Nếu mình bỏ nhà đi, mình sẽ đến chỗ này.{\i0}
Dialogue: 0,0:18:21.80,0:18:25.00,Default,,0,0,0,,{\i1}Ở đây có rất nhiều quán điện tử{\i0}\N{\i1}với đủ mọi game.{\i0}
Dialogue: 0,0:18:25.90,0:18:27.90,Default,,0,0,0,,{\i1}Có cả rất nhiều cửa hàng game nữa.{\i0}
Dialogue: 0,0:18:28.91,0:18:33.32,Default,,0,0,0,,Ôi! Mình thích mấy quán\Ntrông bẩn bẩn thế này!
Dialogue: 0,0:18:33.58,0:18:36.03,Default,,0,0,0,,Có cả máy NES!
Dialogue: 0,0:18:36.35,0:18:37.72,Default,,0,0,0,,Đúng là Kawasaki…
Dialogue: 0,0:18:38.22,0:18:41.26,Default,,0,0,0,,{\i1}Haruo! Cậu đến đây vì mấy cái đó à?{\i0}
Dialogue: 0,0:18:41.85,0:18:42.68,Default,,0,0,0,,Dạ không ạ.
Dialogue: 0,0:18:43.02,0:18:45.81,Default,,0,0,0,,{\i1}Khu phố lớn thế này{\i0}\N{\i1}mà tìm người chưa chắc ở đây{\i0}
Dialogue: 0,0:18:45.86,0:18:47.33,Default,,0,0,0,,{\i1}quả là liều thật,{\i0}
Dialogue: 0,0:18:47.43,0:18:48.83,Default,,0,0,0,,{\i1}nhưng tìm tí một thôi.{\i0}
Dialogue: 0,0:18:48.99,0:18:51.53,Default,,0,0,0,,{\i1}Mình đến đây nhiều đến mức{\i0}
Dialogue: 0,0:18:51.66,0:18:54.86,Default,,0,0,0,,{\i1}biết rõ quán nào ở đâu và có game gì rồi.{\i0}
Dialogue: 0,0:18:55.40,0:18:58.10,Default,,0,0,0,,{\i1}Giờ Ono đang cảm thấy thế nào?{\i0}
