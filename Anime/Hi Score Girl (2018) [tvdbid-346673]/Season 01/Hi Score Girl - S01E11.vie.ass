Dialogue: 0,0:00:-03.-49,0:00:00.-52,Default,,0,0,0,,LOẠT PHIM CỦA NETFLIX
Dialogue: 0,0:00:05.92,0:00:09.36,Default,,0,0,0,,NGUYÊN TÁC: OSHIKIRI RENSUKE
Dialogue: 0,0:01:55.23,0:01:56.97,Default,,0,0,0,,Tao không đánh nổi cú nào!
Dialogue: 0,0:01:57.09,0:01:58.83,Default,,0,0,0,,Tao sẽ tẩn mày để xả giận!
Dialogue: 0,0:01:58.93,0:02:01.27,Default,,0,0,0,,Làm gì vậy? Thôi đi!
Dialogue: 0,0:02:01.40,0:02:04.57,Default,,0,0,0,,Người lớn mà đánh nhau\Nvì trò chơi điện tử à?
Dialogue: 0,0:02:04.70,0:02:07.40,Default,,0,0,0,,Cái chỗ này đúng\Nlà chốn thô lỗ, Miyao nhỉ?
Dialogue: 0,0:02:07.80,0:02:09.24,Default,,0,0,0,,Ơ?
Dialogue: 0,0:02:10.54,0:02:12.11,Default,,0,0,0,,Cậu là Ono, đúng không?
Dialogue: 0,0:02:12.88,0:02:16.38,Default,,0,0,0,,Cậu chuyển đến trường Minami\Nvào năm lớp chín?
Dialogue: 0,0:02:18.08,0:02:21.62,Default,,0,0,0,,Tớ… Tớ thấy cậu ở đây nhiều lần rồi,
Dialogue: 0,0:02:22.35,0:02:24.59,Default,,0,0,0,,nhưng ta mới nói chuyện lần đầu.
Dialogue: 0,0:02:28.16,0:02:31.20,Default,,0,0,0,,Cậu chơi game thi đấu rất giỏi,\Nđúng không?
Dialogue: 0,0:02:31.43,0:02:32.97,Default,,0,0,0,,Giỏi đến mức tớ còn biết.
Dialogue: 0,0:02:34.63,0:02:36.33,Default,,0,0,0,,{\i1}Mình nói gì vậy trời?{\i0}
Dialogue: 0,0:02:37.87,0:02:40.51,Default,,0,0,0,,{\i1}Nghe nói cậu ấy cực kì trầm lặng.{\i0}
Dialogue: 0,0:02:40.64,0:02:43.01,Default,,0,0,0,,{\i1}Mình chẳng biết nói gì cả.{\i0}
Dialogue: 0,0:02:45.14,0:02:47.54,Default,,0,0,0,,{\i1}Đây là người khiến Yaguchi…{\i0}
Dialogue: 0,0:02:47.64,0:02:48.47,Default,,0,0,0,,Chào!
Dialogue: 0,0:02:48.85,0:02:50.85,Default,,0,0,0,,Lâu rồi không gặp, Hidaka.
Dialogue: 0,0:02:50.91,0:02:53.15,Default,,0,0,0,,Cả cậu nữa, Ono.
Dialogue: 0,0:02:53.25,0:02:56.22,Default,,0,0,0,,Thật ngạc nhiên\Nkhi thấy hai cậu ở quán game.
Dialogue: 0,0:02:56.35,0:02:58.25,Default,,0,0,0,,Hiếm có đến nỗi tớ phải thốt lên.
Dialogue: 0,0:02:58.76,0:03:02.13,Default,,0,0,0,,Lần cuối các cậu gặp nhau\Nlà hôm tốt nghiệp à?
Dialogue: 0,0:03:02.23,0:03:04.23,Default,,0,0,0,,Hidaka, mãi mới nhận ra cậu đấy.
Dialogue: 0,0:03:04.39,0:03:05.49,Default,,0,0,0,,{\i1}Miyao…{\i0}
Dialogue: 0,0:03:05.56,0:03:08.00,Default,,0,0,0,,{\i1}Cậu ấy vì mình nên mới ra bắt chuyện à?{\i0}
Dialogue: 0,0:03:12.74,0:03:17.25,Default,,0,0,0,,Bạn Ono vẫn toát ra vẻ bí ẩn như mọi khi.
Dialogue: 0,0:03:17.51,0:03:18.98,Default,,0,0,0,,{\i1}Mình nói cái khỉ gì vậy?{\i0}
Dialogue: 0,0:03:19.04,0:03:19.94,Default,,0,0,0,,Ono.
Dialogue: 0,0:03:20.48,0:03:23.48,Default,,0,0,0,,Nhân dịp cậu ở đây,\Nđấu với tớ một trận được không?
Dialogue: 0,0:03:26.15,0:03:28.32,Default,,0,0,0,,Thôi, tớ xin can.
Dialogue: 0,0:03:28.45,0:03:29.72,Default,,0,0,0,,Sao lại thế?
Dialogue: 0,0:03:29.95,0:03:35.02,Default,,0,0,0,,Mấy ông người lớn đang vật lộn\Nvà lột quần áo nhau ra kia kìa.
Dialogue: 0,0:03:35.73,0:03:39.10,Default,,0,0,0,,Chắc là hôm nay hai cậu về đi thì hơn.
Dialogue: 0,0:03:39.26,0:03:40.90,Default,,0,0,0,,Chắc… Chắc cậu nói đúng.
Dialogue: 0,0:03:41.06,0:03:41.89,Default,,0,0,0,,Ono!
Dialogue: 0,0:03:42.30,0:03:44.97,Default,,0,0,0,,Là tớ, Doi đây! Cậu có nhớ không?
Dialogue: 0,0:03:45.17,0:03:48.31,Default,,0,0,0,,Hồi tiểu học,\Nbọn mình đã tỏa sáng cùng nhau đấy!
Dialogue: 0,0:03:48.67,0:03:49.67,Default,,0,0,0,,Doi…
Dialogue: 0,0:03:49.84,0:03:52.61,Default,,0,0,0,,Xem này, giờ tớ vẫn tỏa sáng đây.
Dialogue: 0,0:03:53.41,0:03:55.41,Default,,0,0,0,,Vậy là cậu có nhớ tớ.
Dialogue: 0,0:03:55.51,0:03:58.58,Default,,0,0,0,,Đi. Bọn mình chơi gì đi, Ono!
Dialogue: 0,0:03:58.72,0:04:02.32,Default,,0,0,0,,Tớ sẽ thắng kẹo để tặng cậu!
Dialogue: 0,0:04:04.45,0:04:05.72,Default,,0,0,0,,Không lấy được rồi.
Dialogue: 0,0:04:05.86,0:04:08.76,Default,,0,0,0,,Lẽ ra nên bỏ 100 yên\Nmua 10 cái kẹo cho rồi chăng?
Dialogue: 0,0:04:09.13,0:04:11.83,Default,,0,0,0,,Đừng nói thế. Thế thì chán lắm.
Dialogue: 0,0:04:12.00,0:04:14.17,Default,,0,0,0,,Mà đống xèng mày vừa thắng đâu rồi?
Dialogue: 0,0:04:14.30,0:04:16.74,Default,,0,0,0,,Tao nộp hết cả 50.000 xèng cho quán rồi.
Dialogue: 0,0:04:17.67,0:04:20.94,Default,,0,0,0,,{\i1}Nếu Yaguchi đỗ vào học viện Joran,{\i0}
Dialogue: 0,0:04:21.30,0:04:24.64,Default,,0,0,0,,{\i1}quan hệ giữa cậu ấy và Ono{\i0}\N{\i1}sẽ tiến triển thế nào?{\i0}
Dialogue: 0,0:04:25.68,0:04:30.05,Default,,0,0,0,,{\i1}Cậu ấy là người đã khiến Yaguchi{\i0}\N{\i1}nghiêm túc đến mức bỏ game.{\i0}
Dialogue: 0,0:04:32.25,0:04:36.49,Default,,0,0,0,,Ono, nếu tớ thắng,\Ncậu đi xem phim với tớ nhé.
Dialogue: 0,0:04:36.62,0:04:39.36,Default,,0,0,0,,Phim {\i1}Hồn ma nhà xí{\i0}\Nhoặc {\i1}Lời thì thầm trái tim.{\i0}
Dialogue: 0,0:04:39.42,0:04:40.79,Default,,0,0,0,,Chọn phim kiểu gì vậy?
Dialogue: 0,0:04:43.16,0:04:44.13,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:04:44.89,0:04:45.76,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:04:45.96,0:04:49.20,Default,,0,0,0,,Rổ ở xa quá nên khó ném trúng.
Dialogue: 0,0:04:53.37,0:04:54.87,Default,,0,0,0,,Ono này.
Dialogue: 0,0:04:55.81,0:04:58.18,Default,,0,0,0,,Gần đây, cậu có gặp Yaguchi không?
Dialogue: 0,0:05:02.61,0:05:04.61,Default,,0,0,0,,Trúng chính giữa mặt rồi.
Dialogue: 0,0:05:04.95,0:05:08.72,Default,,0,0,0,,Nếu cậu đi một mình\Nthì chắc sẽ ngượng lắm.
Dialogue: 0,0:05:09.35,0:05:12.69,Default,,0,0,0,,Nhưng dù có chút hậu đậu\Nthì cậu vẫn rất duyên dáng.
Dialogue: 0,0:05:13.09,0:05:15.16,Default,,0,0,0,,Cậu nói gì thế, Miyao?
Dialogue: 0,0:05:15.56,0:05:17.93,Default,,0,0,0,,Lỡ cậu ấy gãy mũi hay vỡ răng thì sao?
Dialogue: 0,0:05:18.49,0:05:21.26,Default,,0,0,0,,Cậu chắc chắn là không sao chứ, Ono?
Dialogue: 0,0:05:21.46,0:05:22.49,Default,,0,0,0,,Cậu…
Dialogue: 0,0:05:23.93,0:05:26.67,Default,,0,0,0,,chuyển sang chơi {\i1}Virtua Cop{\i0} à?
Dialogue: 0,0:05:27.74,0:05:31.51,Default,,0,0,0,,Cậu trông có vẻ choáng váng.\NCó lẽ nên về luôn thì hơn.
Dialogue: 0,0:05:34.28,0:05:35.51,Default,,0,0,0,,Tớ sẽ chơi với cậu.
Dialogue: 0,0:05:38.38,0:05:42.42,Default,,0,0,0,,Ôi! Hai cô nàng xinh xắn\Nhợp tác chơi game bắn súng à?
Dialogue: 0,0:05:42.49,0:05:43.52,Default,,0,0,0,,Đúng là đáng xem.
Dialogue: 0,0:05:44.05,0:05:47.02,Default,,0,0,0,,{\i1}Ghê quá. Ghê quá đi mất, Haruo ơi!{\i0}
Dialogue: 0,0:05:52.36,0:05:53.59,Default,,0,0,0,,{\i1}Giỏi quá.{\i0}
Dialogue: 0,0:05:53.90,0:05:57.27,Default,,0,0,0,,{\i1}Mình phải bắn hai, ba phát{\i0}\N{\i1}mới hạ được kẻ địch,{\i0}
Dialogue: 0,0:05:57.37,0:05:59.67,Default,,0,0,0,,{\i1}trong khi Ono luôn chỉ bắn một phát.{\i0}
Dialogue: 0,0:06:00.54,0:06:02.88,Default,,0,0,0,,{\i1}Bình tĩnh, điềm đạm, không cử động thừa.{\i0}
Dialogue: 0,0:06:02.94,0:06:04.17,Default,,0,0,0,,{\i1}Khéo léo thật đấy.{\i0}
Dialogue: 0,0:06:04.44,0:06:06.78,Default,,0,0,0,,{\i1}Tuy hơi khó lại gần,{\i0}
Dialogue: 0,0:06:06.91,0:06:08.51,Default,,0,0,0,,{\i1}nhưng cậu ấy xinh thật.{\i0}
Dialogue: 0,0:06:08.91,0:06:10.91,Default,,0,0,0,,{\i1}Nhưng có vẻ cũng có mặt xấu.{\i0}
Dialogue: 0,0:06:11.58,0:06:13.92,Default,,0,0,0,,{\i1}Mình… muốn biết cậu ấy thật sự nghĩ gì.{\i0}
Dialogue: 0,0:06:14.65,0:06:15.69,Default,,0,0,0,,Ono…
Dialogue: 0,0:06:17.05,0:06:19.22,Default,,0,0,0,,Cậu nghĩ gì về Yaguchi?
Dialogue: 0,0:06:19.96,0:06:21.40,Default,,0,0,0,,Chết rồi!
Dialogue: 0,0:06:21.46,0:06:24.36,Default,,0,0,0,,Ono bắn nhầm một thường dân rồi!
Dialogue: 0,0:06:25.23,0:06:27.17,Default,,0,0,0,,Sau khi trượt học viện Joran,
Dialogue: 0,0:06:27.26,0:06:29.26,Default,,0,0,0,,có vẻ Yaguchi luôn cảm thấy tự ti.
Dialogue: 0,0:06:30.07,0:06:31.20,Default,,0,0,0,,So với cậu.
Dialogue: 0,0:06:31.70,0:06:33.70,Default,,0,0,0,,Chết rồi! Lại bắn nhầm nữa!
Dialogue: 0,0:06:33.87,0:06:35.94,Default,,0,0,0,,Không biết họ đang nói gì nhỉ?
Dialogue: 0,0:06:37.74,0:06:40.51,Default,,0,0,0,,Tớ nghĩ cậu ấy không đến các quán game nữa
Dialogue: 0,0:06:40.64,0:06:43.04,Default,,0,0,0,,là vì sợ phải đối mặt với cậu.
Dialogue: 0,0:06:44.31,0:06:47.41,Default,,0,0,0,,Lần nào đến đây, cậu ấy cũng\Nbồn chồn và đề phòng.
Dialogue: 0,0:06:48.42,0:06:49.39,Default,,0,0,0,,Này…
Dialogue: 0,0:06:50.45,0:06:52.35,Default,,0,0,0,,Nói thật cảm xúc của cậu đi.
Dialogue: 0,0:06:53.16,0:06:56.26,Default,,0,0,0,,Chứ thấy Yaguchi bây giờ, tớ thương lắm.
Dialogue: 0,0:06:56.86,0:07:00.23,Default,,0,0,0,,Nếu cậu không hề để tâm đến cậu ấy…
Dialogue: 0,0:07:00.96,0:07:02.33,Default,,0,0,0,,không có tình cảm…
Dialogue: 0,0:07:03.03,0:07:04.33,Default,,0,0,0,,thì tớ sẽ…
Dialogue: 0,0:07:20.42,0:07:22.22,Default,,0,0,0,,Cậu giỏi thật đấy, Ono ạ!
Dialogue: 0,0:07:23.09,0:07:26.39,Default,,0,0,0,,Tớ không ngờ\Nlà cậu chơi game giỏi đến vậy!
Dialogue: 0,0:07:27.19,0:07:29.96,Default,,0,0,0,,{\i1}Mình chỉ bằng một góc cậu ấy.{\i0}
Dialogue: 0,0:07:30.23,0:07:33.83,Default,,0,0,0,,{\i1}Nhưng không biết nếu đấu game đối kháng{\i0}\N{\i1}thì sẽ thế nào.{\i0}
Dialogue: 0,0:07:34.43,0:07:36.90,Default,,0,0,0,,Vậy… chào nhé.
Dialogue: 0,0:07:37.03,0:07:38.87,Default,,0,0,0,,Cậu đi về cẩn thận nhé, Ono.
Dialogue: 0,0:07:42.47,0:07:44.24,Default,,0,0,0,,{\i1}May mà tình hình yên ổn.{\i0}
Dialogue: 0,0:07:44.37,0:07:47.84,Default,,0,0,0,,{\i1}Sao tao phải lo lắng giúp mày vậy, Haruo?{\i0}
Dialogue: 0,0:07:48.48,0:07:50.48,Default,,0,0,0,,{\i1}Mình làm gì thế này?{\i0}
Dialogue: 0,0:07:50.78,0:07:52.58,Default,,0,0,0,,{\i1}Lần đầu nói chuyện với cậu ấy{\i0}
Dialogue: 0,0:07:52.72,0:07:55.16,Default,,0,0,0,,{\i1}mà lại hỏi thế. Trong khi chơi nữa chứ.{\i0}
Dialogue: 0,0:07:56.79,0:07:57.99,Default,,0,0,0,,Tiểu thư Akira.
Dialogue: 0,0:07:58.55,0:08:03.56,Default,,0,0,0,,Có vẻ lên cấp ba rồi\Nmà em vẫn giữ cái thói quen tệ hại kia.
Dialogue: 0,0:08:04.39,0:08:06.86,Default,,0,0,0,,Là con gái của tập đoàn tài phiệt Ono
Dialogue: 0,0:08:07.00,0:08:10.17,Default,,0,0,0,,mà đến mấy chỗ như thế\Nthì thật không tưởng tượng nổi!
Dialogue: 0,0:08:10.27,0:08:14.17,Default,,0,0,0,,Thưa cô Goda, có thể\Ncô thấy sở thích đó thật gớm ghiếc,
Dialogue: 0,0:08:14.37,0:08:16.81,Default,,0,0,0,,nhưng nó là thú vui nho nhỏ của tiểu thư.
Dialogue: 0,0:08:17.14,0:08:20.24,Default,,0,0,0,,Đó là sở thích duy nhất\Ngiúp tiểu thư thư giãn.
Dialogue: 0,0:08:20.31,0:08:24.68,Default,,0,0,0,,Nếu cô ấy thành ra hư hỏng\Nvà ở đó suốt ngày thì đã khác…
Dialogue: 0,0:08:24.83,0:08:25.70,Default,,0,0,0,,Không.
Dialogue: 0,0:08:25.88,0:08:28.45,Default,,0,0,0,,Đến chỗ hạ cấp đó là không chấp nhận được.
Dialogue: 0,0:08:28.89,0:08:30.49,Default,,0,0,0,,Đó là dấu hiệu của hư hỏng.
Dialogue: 0,0:08:30.62,0:08:33.92,Default,,0,0,0,,Vậy… Vậy thì mong cô xem xét\Nmua máy game cho tiểu thư…
Dialogue: 0,0:08:33.99,0:08:35.59,Default,,0,0,0,,Ông nói nhăng cuội gì vậy?
Dialogue: 0,0:08:35.76,0:08:39.90,Default,,0,0,0,,Ví dụ như PlayStation hoặc Saturn,\Nhoặc máy Virtual Boy sắp ra!
Dialogue: 0,0:08:40.03,0:08:42.33,Default,,0,0,0,,Tôi không biết gì về game cả!
Dialogue: 0,0:08:42.50,0:08:46.64,Default,,0,0,0,,Cô Goda, xin cô,\Nmua Virtual Boy cho tiểu thư đi mà.
Dialogue: 0,0:08:46.74,0:08:48.04,Default,,0,0,0,,Tôi cũng muốn có!
Dialogue: 0,0:08:48.17,0:08:49.01,Default,,0,0,0,,Không được.
Dialogue: 0,0:08:49.27,0:08:50.67,Default,,0,0,0,,Đi mà!
Dialogue: 0,0:08:50.84,0:08:52.07,Default,,0,0,0,,- Xin cô…\N- Đủ rồi!
Dialogue: 0,0:08:56.01,0:08:57.68,Default,,0,0,0,,Cú đá ấy hạ gục tôi rồi.
Dialogue: 0,0:08:57.78,0:09:01.48,Default,,0,0,0,,Tôi, Goda Moemi, gia sư riêng của nhà Ono,
Dialogue: 0,0:09:01.68,0:09:03.95,Default,,0,0,0,,tuyệt đối không nhân nhượng.
Dialogue: 0,0:09:04.12,0:09:10.23,Default,,0,0,0,,Trong những năm cấp ba dễ sa ngã này,\Ntôi sẽ trông chừng Akira thật cẩn thận.
Dialogue: 0,0:09:11.76,0:09:16.57,Default,,0,0,0,,Tôi đã bắt bố mẹ em hứa\Nlà sẽ không cho em dù chỉ một yên.
Dialogue: 0,0:09:16.93,0:09:20.23,Default,,0,0,0,,Dù là trò oẳn tù tì tốn 10 yên,\Nem cũng không được chơi.
Dialogue: 0,0:09:20.40,0:09:21.53,Default,,0,0,0,,Vậy là cô có biết…
Dialogue: 0,0:09:22.31,0:09:24.31,Default,,0,0,0,,Giờ giới nghiêm là bốn giờ chiều.
Dialogue: 0,0:09:24.44,0:09:26.44,Default,,0,0,0,,Học xong, em phải về thẳng nhà.
Dialogue: 0,0:09:26.74,0:09:30.04,Default,,0,0,0,,Thế thì cô ấy không có thời gian\Nchơi với bạn mất…
Dialogue: 0,0:09:30.21,0:09:32.98,Default,,0,0,0,,Không sao. Càng tốt.
Dialogue: 0,0:09:33.25,0:09:35.92,Default,,0,0,0,,Nói chuyện ở trường là quá đủ rồi.
Dialogue: 0,0:09:36.42,0:09:39.59,Default,,0,0,0,,Quan hệ tình cảm với con trai\Nlại càng cấm.
Dialogue: 0,0:09:39.86,0:09:44.57,Default,,0,0,0,,Khi em đã tốt nghiệp cấp ba\Nvà theo học một trường đại học hàng đầu,
Dialogue: 0,0:09:44.76,0:09:48.13,Default,,0,0,0,,em sẽ cưới một người do bố mẹ chỉ dịnh.
Dialogue: 0,0:09:48.76,0:09:52.93,Default,,0,0,0,,Đó là ý muốn của bố mẹ em!
Dialogue: 0,0:09:58.57,0:10:01.01,Default,,0,0,0,,Nằm thế này mà mình đã qua 100 cửa rồi.
Dialogue: 0,0:10:01.14,0:10:04.34,Default,,0,0,0,,Mình thấy mình đã lấy lại căn bản\Nvà còn hơn thế nữa.
Dialogue: 0,0:10:05.08,0:10:10.09,Default,,0,0,0,,Nhưng nhìn ngược quen rồi, có khi\Nchơi trò khác lại bị tác dụng ngược.
Dialogue: 0,0:10:10.25,0:10:11.35,Default,,0,0,0,,Thôi vậy.
Dialogue: 0,0:10:11.52,0:10:16.79,Default,,0,0,0,,Mình đã mượn được cục cưng Neo Geo CD này\Ntừ thằng Kobayashi nhà giàu cùng lớp.
Dialogue: 0,0:10:17.13,0:10:21.13,Default,,0,0,0,,Có nó, mình tập ở nhà bao nhiêu cũng được.
Dialogue: 0,0:10:21.70,0:10:26.74,Default,,0,0,0,,Mình mà được tập thỏa thích ở nhà mà\Nkhông cần sợ hết tiền thì sẽ thế nào đây?
Dialogue: 0,0:10:27.27,0:10:30.31,Default,,0,0,0,,Sức mạnh siêu phàm của mình\Nsẽ làm cô ấy ngỡ ngàng.
Dialogue: 0,0:10:30.37,0:10:33.57,Default,,0,0,0,,Chắc chắn Hidaka cũng sẽ sốc đến ngất xỉu.
Dialogue: 0,0:10:40.27,0:10:44.69,Default,,0,0,0,,ĐANG TẢI\NXIN CHỜ
Dialogue: 0,0:10:53.10,0:10:54.44,Default,,0,0,0,,Hắt xì!
Dialogue: 0,0:11:37.51,0:11:39.01,Default,,0,0,0,,Tốn thời gian quá!
Dialogue: 0,0:11:50.32,0:11:53.56,Default,,0,0,0,,Là con nhà Ono,\Nem phải hoàn thành nghĩa vụ của mình.
Dialogue: 0,0:11:53.82,0:11:55.12,Default,,0,0,0,,Chấp nhận đi.
Dialogue: 0,0:11:55.66,0:11:58.06,Default,,0,0,0,,{\i1}Em không được có cuộc sống riêng!{\i0}
Dialogue: 0,0:11:58.96,0:12:03.36,Default,,0,0,0,,Có vẻ Yaguchi cảm thấy tự ti so với cậu.
Dialogue: 0,0:12:04.83,0:12:07.20,Default,,0,0,0,,{\i1}Nói thật cảm xúc của cậu đi.{\i0}
Dialogue: 0,0:12:25.37,0:12:31.98,Default,,0,0,0,,CÔ NÀNG BẤT BẠI
Dialogue: 0,0:12:33.03,0:12:39.40,Default,,0,0,0,,THÁNG 7 NĂM 1995
Dialogue: 0,0:12:43.67,0:12:45.31,Default,,0,0,0,,{\i1}Cô ấy cũng không ở đây.{\i0}
Dialogue: 0,0:12:46.78,0:12:50.05,Default,,0,0,0,,{\i1}Mình lấy lại được cảm giác{\i0}\N{\i1}và tự tin được một tuần rồi.{\i0}
Dialogue: 0,0:12:50.21,0:12:53.65,Default,,0,0,0,,{\i1}Tìm khắp mọi quán game{\i0}\N{\i1}và tiệm kẹo mình nghĩ đến rồi,{\i0}
Dialogue: 0,0:12:53.82,0:12:56.16,Default,,0,0,0,,{\i1}mà vẫn không thấy Ono.{\i0}
Dialogue: 0,0:12:57.09,0:13:00.03,Default,,0,0,0,,{\i1}Mãi mình mới đủ dũng khí gặp cô ấy mà,{\i0}
Dialogue: 0,0:13:00.19,0:13:01.76,Default,,0,0,0,,{\i1}thế này là sao nhỉ?{\i0}
Dialogue: 0,0:13:02.83,0:13:07.64,Default,,0,0,0,,{\i1}Hồi trước thì mình luôn thấy{\i0}\N{\i1}xe nhà cô ấy đỗ trước quán game.{\i0}
Dialogue: 0,0:13:08.90,0:13:10.87,Default,,0,0,0,,TRẬN ĐẤU KẾT THÚC
Dialogue: 0,0:13:11.57,0:13:12.97,Default,,0,0,0,,{\i1}Toàn thắng 21 trận.{\i0}
Dialogue: 0,0:13:13.60,0:13:16.24,Default,,0,0,0,,{\i1}Có vẻ cậu ấy lấy lại phong độ rồi.{\i0}
Dialogue: 0,0:13:17.07,0:13:18.57,Default,,0,0,0,,Thấy chưa, Hidaka?
Dialogue: 0,0:13:18.67,0:13:23.48,Default,,0,0,0,,Tớ đã hoàn toàn trở lại sau khi tập lại\Nbằng {\i1}Yie Ar Kung-Fu{\i0} như cậu nói.
Dialogue: 0,0:13:24.01,0:13:25.91,Default,,0,0,0,,Nhờ tập bằng máy Neo Geo CD,
Dialogue: 0,0:13:25.98,0:13:29.42,Default,,0,0,0,,tớ không chỉ rèn được kỹ năng\Nmà còn có cả sự kiên nhẫn.
Dialogue: 0,0:13:30.12,0:13:31.45,Default,,0,0,0,,Nhờ chờ nó tải game.
Dialogue: 0,0:13:31.59,0:13:32.79,Default,,0,0,0,,Chờ tải game?
Dialogue: 0,0:13:33.29,0:13:37.23,Default,,0,0,0,,Tớ sẽ đáp trả\Nnỗi hổ thẹn mà cậu đã cho tớ nếm trải.
Dialogue: 0,0:13:37.33,0:13:39.87,Default,,0,0,0,,Sau đó, tớ sẽ tiến xa hơn nữa.
Dialogue: 0,0:13:40.10,0:13:42.30,Default,,0,0,0,,Nào, đấu đi.
Dialogue: 0,0:13:42.40,0:13:46.34,Default,,0,0,0,,Trình độ siêu phàm của tớ\Nsẽ khiến cậu ho ra máu đến ngất xỉu…
Dialogue: 0,0:13:46.64,0:13:47.74,Default,,0,0,0,,Tớ không muốn.
Dialogue: 0,0:13:47.94,0:13:48.84,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:13:48.94,0:13:50.71,Default,,0,0,0,,Không phải tớ sợ thua,
Dialogue: 0,0:13:51.01,0:13:53.75,Default,,0,0,0,,mà tớ muốn giữ ngôi vô địch này\Nthêm ít lâu.
Dialogue: 0,0:13:53.81,0:13:55.25,Default,,0,0,0,,Chơi xấu quá, Hidaka!
Dialogue: 0,0:13:55.34,0:13:58.28,Default,,0,0,0,,{\i1}Cậu nói "tiến xa hơn"{\i0}\N{\i1}là muốn ám chỉ Ono chứ gì?{\i0}
Dialogue: 0,0:13:59.05,0:14:01.59,Default,,0,0,0,,Hôm nay tớ chỉ muốn đứng xem thôi.
Dialogue: 0,0:14:01.78,0:14:05.78,Default,,0,0,0,,Vậy hả? Vậy thì xem tớ bất bại 100 trận\Nrồi co rúm lại sợ hãi đi.
Dialogue: 0,0:14:06.22,0:14:07.25,Default,,0,0,0,,Á, trúng đòn rồi.
Dialogue: 0,0:14:14.16,0:14:16.70,Default,,0,0,0,,Cháu chăm chỉ thật đấy, Yaguchi ạ.
Dialogue: 0,0:14:16.93,0:14:19.03,Default,,0,0,0,,Cháu muốn mua thứ gì à?
Dialogue: 0,0:14:19.20,0:14:20.60,Default,,0,0,0,,Virtual Boy ạ.
Dialogue: 0,0:14:20.70,0:14:21.90,Default,,0,0,0,,Vớ chân á?
Dialogue: 0,0:14:26.58,0:14:28.35,Default,,0,0,0,,{\i1}Chẳng lẽ…{\i0}
Dialogue: 0,0:14:28.64,0:14:29.88,Default,,0,0,0,,{\i1}cô ấy chán game rồi?{\i0}
Dialogue: 0,0:14:30.25,0:14:31.32,Default,,0,0,0,,Này, Haruo.
Dialogue: 0,0:14:31.88,0:14:34.52,Default,,0,0,0,,Nghỉ hè này đi xem phim với mẹ không?
Dialogue: 0,0:14:34.58,0:14:35.85,Default,,0,0,0,,Phim {\i1}Trường học Ma ám.{\i0}
Dialogue: 0,0:14:36.29,0:14:37.79,Default,,0,0,0,,Vâng.
Dialogue: 0,0:14:38.75,0:14:41.75,Default,,0,0,0,,{\i1}The King of Fighters '95 sắp ra rồi.{\i0}
Dialogue: 0,0:14:42.16,0:14:44.70,Default,,0,0,0,,{\i1}Nghe nói {\i0}Tekken{\i1} cũng sẽ ra mắt{\i0}\N{\i1}vào tháng 8.{\i0}
Dialogue: 0,0:14:47.53,0:14:50.07,Default,,0,0,0,,{\i1}Biết bao nhiêu game hay sắp ra,{\i0}
Dialogue: 0,0:14:51.17,0:14:52.64,Default,,0,0,0,,{\i1}mà Ono đang nghĩ gì vậy?{\i0}
Dialogue: 0,0:14:55.70,0:14:57.70,Default,,0,0,0,,{\i1}Cô ấy gặp chuyện gì ở nhà sao?{\i0}
Dialogue: 0,0:14:58.54,0:15:00.54,Default,,0,0,0,,{\i1}Mất tinh thần quá.{\i0}
Dialogue: 0,0:15:01.48,0:15:05.15,Default,,0,0,0,,{\i1}Bấy lâu nay mình làm cái khỉ gì vậy?{\i0}
Dialogue: 0,0:15:05.35,0:15:07.05,Default,,0,0,0,,{\i1}Nào là "không xứng gặp".{\i0}
Dialogue: 0,0:15:07.12,0:15:08.82,Default,,0,0,0,,{\i1}Rồi còn "tập lại từ đầu".{\i0}
Dialogue: 0,0:15:10.15,0:15:14.05,Default,,0,0,0,,{\i1}Sao mình cứ lặp đi lặp lại{\i0}\N{\i1}một sai lầm thế này?{\i0}
Dialogue: 0,0:15:30.64,0:15:31.51,Default,,0,0,0,,Ơ kìa.
Dialogue: 0,0:15:32.61,0:15:34.10,Default,,0,0,0,,Cậu Yaguchi.
Dialogue: 0,0:15:34.68,0:15:36.08,Default,,0,0,0,,Là ông quản gia đây mà.
Dialogue: 0,0:15:36.15,0:15:38.99,Default,,0,0,0,,Lâu rồi không gặp cậu.
Dialogue: 0,0:15:39.08,0:15:41.38,Default,,0,0,0,,Ơ? Ông đi một mình ạ?
Dialogue: 0,0:15:41.48,0:15:44.88,Default,,0,0,0,,Nếu cậu hỏi vậy\Nthì hẳn là tiểu thư cũng không ở đây rồi.
Dialogue: 0,0:15:46.59,0:15:48.49,Default,,0,0,0,,Sao? Ono bỏ nhà đi à?
Dialogue: 0,0:15:48.82,0:15:53.83,Default,,0,0,0,,Vâng, gần đây cô ấy bị kèm cặp kĩ quá\Nnên đã bỏ nhà đi.
Dialogue: 0,0:15:54.23,0:15:55.12,Default,,0,0,0,,Kèm cặp?
Dialogue: 0,0:15:55.50,0:15:59.47,Default,,0,0,0,,Cô ấy bị đặt giờ giới nghiêm\Nlà 4:00 chiều, học xong phải về ngay.
Dialogue: 0,0:15:59.70,0:16:03.07,Default,,0,0,0,,Cô ấy không được đến\Nmấy chỗ ưa thích như trước.
Dialogue: 0,0:16:03.41,0:16:07.06,Default,,0,0,0,,Ngày qua ngày,\Ntiểu thư chẳng có mấy thời gian để thở.
Dialogue: 0,0:16:07.38,0:16:10.88,Default,,0,0,0,,Tôi đã lo là sẽ xảy ra chuyện này mà.
Dialogue: 0,0:16:11.01,0:16:13.01,Default,,0,0,0,,"Liệu cô ấy có bỏ nhà đi không?
Dialogue: 0,0:16:13.15,0:16:16.75,Default,,0,0,0,,Trời ơi, không ổn rồi.\NTình hình tệ quá, dễ sợ quá".
Dialogue: 0,0:16:18.32,0:16:20.72,Default,,0,0,0,,{\i1}Sáng nay, đột nhiên cô ấy biến mất,{\i0}
Dialogue: 0,0:16:20.92,0:16:22.92,Default,,0,0,0,,{\i1}mà giờ đã gần tối rồi.{\i0}
Dialogue: 0,0:16:23.13,0:16:24.97,Default,,0,0,0,,{\i1}Tiểu thư không cầm theo gì cả.{\i0}
Dialogue: 0,0:16:25.23,0:16:27.23,Default,,0,0,0,,{\i1}Chắc cô ấy cũng gần hết tiền rồi.{\i0}
Dialogue: 0,0:16:27.40,0:16:30.20,Default,,0,0,0,,{\i1}Tôi lo cho tiểu thư đến phát điên mất.{\i0}
Dialogue: 0,0:16:30.93,0:16:35.57,Default,,0,0,0,,{\i1}Có vẻ vào cấp ba rồi,{\i0}\N{\i1}cô ấy cũng vẫn không làm bạn được với ai.{\i0}
Dialogue: 0,0:16:35.80,0:16:38.44,Default,,0,0,0,,{\i1}Tôi chỉ còn biết tìm đến cậu.{\i0}
Dialogue: 0,0:16:39.24,0:16:43.75,Default,,0,0,0,,{\i1}Cậu có biết tiểu thư có thể đi đâu không?{\i0}
Dialogue: 0,0:16:44.65,0:16:48.52,Default,,0,0,0,,{\i1}Chỗ nào mà cô ấy có kỉ niệm gì đó?{\i0}
Dialogue: 0,0:16:49.85,0:16:50.98,Default,,0,0,0,,{\i1}Không được…{\i0}
Dialogue: 0,0:16:51.09,0:16:53.89,Default,,0,0,0,,{\i1}Sao lại nghĩ đến{\i0}\N{\i1}sân rào lưới mắt cáo của Andre?{\i0}
Dialogue: 0,0:16:54.46,0:16:56.03,Default,,0,0,0,,{\i1}Cũng không phải địa ngục!{\i0}
Dialogue: 0,0:16:56.63,0:16:58.37,Default,,0,0,0,,{\i1}Mình chẳng nghĩ ra gì cả!{\i0}
Dialogue: 0,0:16:58.49,0:17:01.33,Default,,0,0,0,,{\i1}Chỉ nghĩ ra mấy chỗ không có thật!{\i0}
Dialogue: 0,0:17:02.87,0:17:05.67,Default,,0,0,0,,{\i1}Mấy chỗ cô ấy sẽ đến phải là…{\i0}
Dialogue: 0,0:17:07.30,0:17:11.04,Default,,0,0,0,,{\i1}Mình tìm hết quán game khu này rồi,{\i0}\N{\i1}nên chắc cô ấy không ở đó.{\i0}
Dialogue: 0,0:17:11.81,0:17:16.18,Default,,0,0,0,,{\i1}Cô ấy sẽ không ngốc đến mức{\i0}\N{\i1}đến chỗ nào mà ông quản gia tìm được.{\i0}
Dialogue: 0,0:17:17.78,0:17:20.98,Default,,0,0,0,,{\i1}Quả là giờ không phải lúc tập luyện mà.{\i0}
Dialogue: 0,0:17:21.42,0:17:23.42,Default,,0,0,0,,{\i1}Nếu mình đi gặp cô ấy sớm hơn…{\i0}
Dialogue: 0,0:17:24.35,0:17:25.25,Default,,0,0,0,,{\i1}Không…{\i0}
Dialogue: 0,0:17:25.59,0:17:28.33,Default,,0,0,0,,{\i1}Có thể Ono muốn ở một mình.{\i0}
Dialogue: 0,0:17:28.49,0:17:30.36,Default,,0,0,0,,{\i1}Thế thì mình mà đi tìm là dở.{\i0}
Dialogue: 0,0:17:31.29,0:17:33.59,Default,,0,0,0,,{\i1}Không khéo lại bị xem là nhiều chuyện…{\i0}
Dialogue: 0,0:17:34.26,0:17:39.87,Default,,0,0,0,,{\i1}Với cả mình cũng có can thiệp được gì{\i0}\N{\i1}vào chuyện nhà Ono đâu.{\i0}
Dialogue: 0,0:17:40.30,0:17:44.34,Default,,0,0,0,,Cậu là người bạn duy nhất\Ncủa tiểu thư đấy, cậu trai!
Dialogue: 0,0:17:44.57,0:17:49.68,Default,,0,0,0,,Giờ cô ấy bỏ nhà đi\Nmà cậu lại cắm đầu chơi Virtual Boy à?
Dialogue: 0,0:17:51.41,0:17:53.95,Default,,0,0,0,,{\i1}Mình vẫn còn chưa đến vài chỗ.{\i0}
Dialogue: 0,0:17:54.52,0:17:57.76,Default,,0,0,0,,{\i1}Ví dụ như mấy khu nhiều quán game{\i0}\N{\i1}nhưng ở xa.{\i0}
Dialogue: 0,0:17:58.35,0:18:02.02,Default,,0,0,0,,{\i1}Một nơi mà cô ấy sẽ đến{\i0}\N{\i1}nếu không có nhiều tiền.{\i0}
Dialogue: 0,0:18:02.56,0:18:03.39,Default,,0,0,0,,KAWASAKI
Dialogue: 0,0:18:03.49,0:18:04.66,Default,,0,0,0,,{\i1}Phải là chỗ này.{\i0}
Dialogue: 0,0:18:05.73,0:18:08.13,Default,,0,0,0,,{\i1}Bọn mình cũng từng đến đây một lần rồi.{\i0}
Dialogue: 0,0:18:08.63,0:18:11.47,Default,,0,0,0,,{\i1}Nếu mình bỏ nhà đi, mình sẽ đến chỗ này.{\i0}
Dialogue: 0,0:18:11.80,0:18:15.00,Default,,0,0,0,,{\i1}Ở đây có rất nhiều quán điện tử{\i0}\N{\i1}với đủ mọi game.{\i0}
Dialogue: 0,0:18:15.90,0:18:17.90,Default,,0,0,0,,{\i1}Có cả rất nhiều cửa hàng game nữa.{\i0}
Dialogue: 0,0:18:18.91,0:18:23.32,Default,,0,0,0,,Ôi! Mình thích mấy quán\Ntrông bẩn bẩn thế này!
Dialogue: 0,0:18:23.58,0:18:26.03,Default,,0,0,0,,Có cả máy NES!
Dialogue: 0,0:18:26.35,0:18:27.72,Default,,0,0,0,,Đúng là Kawasaki…
Dialogue: 0,0:18:28.22,0:18:31.26,Default,,0,0,0,,{\i1}Haruo! Cậu đến đây vì mấy cái đó à?{\i0}
Dialogue: 0,0:18:31.85,0:18:32.68,Default,,0,0,0,,Dạ không ạ.
Dialogue: 0,0:18:33.02,0:18:35.81,Default,,0,0,0,,{\i1}Khu phố lớn thế này{\i0}\N{\i1}mà tìm người chưa chắc ở đây{\i0}
Dialogue: 0,0:18:35.86,0:18:37.33,Default,,0,0,0,,{\i1}quả là liều thật,{\i0}
Dialogue: 0,0:18:37.43,0:18:38.83,Default,,0,0,0,,{\i1}nhưng tìm tí một thôi.{\i0}
Dialogue: 0,0:18:38.99,0:18:41.53,Default,,0,0,0,,{\i1}Mình đến đây nhiều đến mức{\i0}
Dialogue: 0,0:18:41.66,0:18:44.86,Default,,0,0,0,,{\i1}biết rõ quán nào ở đâu và có game gì rồi.{\i0}
Dialogue: 0,0:18:45.40,0:18:48.10,Default,,0,0,0,,{\i1}Giờ Ono đang cảm thấy thế nào?{\i0}
