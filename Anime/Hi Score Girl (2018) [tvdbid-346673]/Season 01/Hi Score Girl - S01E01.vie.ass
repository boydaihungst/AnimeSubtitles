Dialogue: 0,0:00:06.04,0:00:10.04,Default,,0,0,0,,LOẠT PHIM CỦA NETFLIX
Dialogue: 0,0:00:28.23,0:00:30.20,Default,,0,0,0,,{\i1}Tuyệt! Mười trận bất bại!{\i0}
Dialogue: 0,0:00:30.40,0:00:32.40,Default,,0,0,0,,{\i1}Thế nào, đám đông này đã khâm phục{\i0}
Dialogue: 0,0:00:32.50,0:00:34.80,Default,,0,0,0,,{\i1}kỹ năng thần thánh của mình chưa?{\i0}
Dialogue: 0,0:00:35.07,0:00:36.64,Default,,0,0,0,,Mau lên đi chứ!
Dialogue: 0,0:00:36.74,0:00:38.21,Default,,0,0,0,,{\i1}Chả ai phục mình cả!{\i0}
Dialogue: 0,0:00:38.27,0:00:39.97,Default,,0,0,0,,Cho người khác chơi với chứ!
Dialogue: 0,0:00:40.47,0:00:43.21,Default,,0,0,0,,{\i1}Chỉ thấy một hàng dài sốt ruột thúc ép!{\i0}
Dialogue: 0,0:00:47.35,0:00:49.22,Default,,0,0,0,,{\i1}Sao bên kia kinh ngạc vậy?{\i0}
Dialogue: 0,0:00:49.95,0:00:50.79,Default,,0,0,0,,Là con gái!
Dialogue: 0,0:00:50.98,0:00:52.92,Default,,0,0,0,,{\i1}Có con gái chơi {\i0}Street Fighter II{\i1}?{\i0}
Dialogue: 0,0:00:57.76,0:00:58.59,Default,,0,0,0,,{\i1}Không thể nào!{\i0}
Dialogue: 0,0:00:58.79,0:01:01.43,Default,,0,0,0,,{\i1}Không phải cậu ta học lớp 6B cùng mình à?{\i0}
Dialogue: 0,0:01:01.53,0:01:02.70,Default,,0,0,0,,{\i1}Ono Akira đây mà!{\i0}
Dialogue: 0,0:01:05.40,0:01:06.40,Default,,0,0,0,,Zangief à{\i1}?{\i0}
Dialogue: 0,0:01:08.60,0:01:12.44,Default,,0,0,0,,NGUYÊN TÁC: OSHIKIRI RENSUKE
Dialogue: 0,0:02:54.51,0:02:55.44,Default,,0,0,0,,VÒNG 1
Dialogue: 0,0:02:55.58,0:02:57.58,Default,,0,0,0,,{\an8}{\i1}Chiến tranh Vùng Vịnh nổ ra.{\i0}
Dialogue: 0,0:02:59.08,0:03:02.08,Default,,0,0,0,,{\i1}Ngọn Fugendake của dãy Unzen{\i0}\N{\i1}ở Nagasaki phun trào.{\i0}
Dialogue: 0,0:03:03.82,0:03:07.66,Default,,0,0,0,,{\i1}Năm 1991: Năm của những sự kiện{\i0}\N{\i1}làm chấn động thế giới!{\i0}
Dialogue: 0,0:03:07.72,0:03:09.19,Default,,0,0,0,,{\an8}CHIẾN BINH THẾ GIỚI
Dialogue: 0,0:03:12.33,0:03:13.73,Default,,0,0,0,,Thật sao trời?
Dialogue: 0,0:03:13.79,0:03:15.23,Default,,0,0,0,,{\i1}Khỉ thật.{\i0}
Dialogue: 0,0:03:15.63,0:03:16.46,Default,,0,0,0,,{\i1}Khỉ thật!{\i0}
Dialogue: 0,0:03:19.73,0:03:21.73,Default,,0,0,0,,{\i1}Thế là đi tong 500 yên tiêu vặt…{\i0}
Dialogue: 0,0:03:28.61,0:03:30.61,Default,,0,0,0,,Nhóc này lại đấu à?
Dialogue: 0,0:03:32.65,0:03:34.22,Default,,0,0,0,,Bao nhiêu lần rồi nhỉ?
Dialogue: 0,0:03:37.22,0:03:38.42,Default,,0,0,0,,{\i1}Mình chả hiểu gì cả…{\i0}
Dialogue: 0,0:03:38.48,0:03:41.18,Default,,0,0,0,,{\i1}Cậu ta đâu có giống kiểu người sẽ đến đây!{\i0}
Dialogue: 0,0:03:41.82,0:03:44.06,Default,,0,0,0,,{\i1}Học giỏi nhất, được thầy yêu bạn mến,{\i0}
Dialogue: 0,0:03:44.12,0:03:46.22,Default,,0,0,0,,{\i1}lại còn là tiểu thư nhà giàu!{\i0}
Dialogue: 0,0:03:47.49,0:03:50.29,Default,,0,0,0,,{\i1}Cậu ta sống ở một thế giới hoàn toàn khác.{\i0}
Dialogue: 0,0:03:50.86,0:03:53.30,Default,,0,0,0,,{\i1}Hoàn toàn trái ngược với một đứa{\i0}
Dialogue: 0,0:03:53.37,0:03:56.67,Default,,0,0,0,,{\i1}luôn cắm rễ{\i0}\N{\i1}ở quán điện tử sặc mùi thuốc lá như mình!{\i0}
Dialogue: 0,0:03:57.30,0:04:00.67,Default,,0,0,0,,{\i1}Rốt cuộc cậu ta đã làm gì{\i0}\N{\i1}để lưu lạc đến đây?{\i0}
Dialogue: 0,0:04:06.38,0:04:07.21,Default,,0,0,0,,{\i1}Bạn thắng!{\i0}
Dialogue: 0,0:04:07.38,0:04:08.51,Default,,0,0,0,,Không thể nào!
Dialogue: 0,0:04:08.98,0:04:10.58,Default,,0,0,0,,Thắng 28 trận liên tiếp!
Dialogue: 0,0:04:10.65,0:04:12.49,Default,,0,0,0,,Con nhỏ này giỏi quá!
Dialogue: 0,0:04:12.85,0:04:15.62,Default,,0,0,0,,Mấy đứa quen mặt ở đây cũng đấu không lại!
Dialogue: 0,0:04:16.56,0:04:17.66,Default,,0,0,0,,Tránh ra!
Dialogue: 0,0:04:17.79,0:04:18.96,Default,,0,0,0,,Đến lượt tao.
Dialogue: 0,0:04:19.09,0:04:20.83,Default,,0,0,0,,Tao sẽ chặn nó lại!
Dialogue: 0,0:04:23.53,0:04:26.67,Default,,0,0,0,,{\i1}Mình đã chơi {\i0}Street Fighter II\N{\i1}từ lúc mới phát hành!{\i0}
Dialogue: 0,0:04:27.33,0:04:30.50,Default,,0,0,0,,{\i1}Yaguchi Haruo này rất tự tin{\i0}\N{\i1}vào trình độ của mình.{\i0}
Dialogue: 0,0:04:30.84,0:04:31.67,Default,,0,0,0,,{\i1}Không tin nổi{\i0}
Dialogue: 0,0:04:31.77,0:04:33.87,Default,,0,0,0,,{\i1}là Ono làm cả lũ con trai bẽ mặt{\i0}
Dialogue: 0,0:04:33.97,0:04:36.74,Default,,0,0,0,,{\i1}với chuỗi 28 trận bất bại không tưởng này.{\i0}
Dialogue: 0,0:04:37.24,0:04:38.11,Default,,0,0,0,,{\i1}Chưa nói là…{\i0}
Dialogue: 0,0:04:38.21,0:04:39.61,Default,,0,0,0,,{\i1}cậu ta dùng Zangief!{\i0}
Dialogue: 0,0:04:39.81,0:04:43.38,Default,,0,0,0,,{\i1}Có những người còn không{\i0}\N{\i1}ra được chiêu Shoryuken cơ bản.{\i0}
Dialogue: 0,0:04:43.52,0:04:45.19,Default,,0,0,0,,{\i1}Thế mà cậu ta ra được chiêu{\i0}
Dialogue: 0,0:04:45.25,0:04:47.29,Default,,0,0,0,,{\i1}vật xoay tròn Screw Pile-Driver!{\i0}
Dialogue: 0,0:04:47.35,0:04:49.55,Default,,0,0,0,,{\i1}Nhìn cậu ta ra chiêu mới dễ làm sao!{\i0}
Dialogue: 0,0:04:50.62,0:04:52.36,Default,,0,0,0,,{\i1}Tức quá đi!{\i0}
Dialogue: 0,0:04:53.06,0:04:57.13,Default,,0,0,0,,{\i1}Mãi mình mới dám làm trái{\i0}\N{\i1}quy định của trường, vượt qua con đường{\i0}
Dialogue: 0,0:04:57.33,0:05:00.83,Default,,0,0,0,,{\i1}xe chật như nêm này{\i0}\N{\i1}để đến quán điện tử ở khu phố bên cạnh,{\i0}
Dialogue: 0,0:05:01.10,0:05:02.84,Default,,0,0,0,,{\i1}thánh địa của mình!{\i0}
Dialogue: 0,0:05:03.14,0:05:06.34,Default,,0,0,0,,{\i1}Thế mà cậu ta lại đến phá hoại.{\i0}
Dialogue: 0,0:05:06.64,0:05:07.71,Default,,0,0,0,,{\i1}Không được.{\i0}
Dialogue: 0,0:05:07.97,0:05:10.37,Default,,0,0,0,,{\i1}Vậy nên, với đồng 50 yên cuối cùng này,{\i0}
Dialogue: 0,0:05:10.51,0:05:12.88,Default,,0,0,0,,{\i1}tôi sẽ làm cậu không dám ló mặt đến nữa!{\i0}
Dialogue: 0,0:05:13.58,0:05:14.55,Default,,0,0,0,,Khỉ thật!
Dialogue: 0,0:05:15.32,0:05:16.95,Default,,0,0,0,,Vậy là 29 trận bất bại!
Dialogue: 0,0:05:17.38,0:05:18.95,Default,,0,0,0,,Thêm một trận nữa là 30!
Dialogue: 0,0:05:24.72,0:05:25.55,Default,,0,0,0,,CÓ THÁCH ĐẤU!
Dialogue: 0,0:05:32.77,0:05:34.77,Default,,0,0,0,,Gì thế này? Lại là nó à?
Dialogue: 0,0:05:34.83,0:05:36.90,Default,,0,0,0,,Đúng là không biết sợ gì cả!
Dialogue: 0,0:05:39.37,0:05:41.44,Default,,0,0,0,,{\i1}Mình không muốn dùng chiêu này,{\i0}
Dialogue: 0,0:05:41.61,0:05:45.18,Default,,0,0,0,,{\i1}nhưng nó sẽ khiến cả Ono siêu đẳng{\i0}\N{\i1}cũng phải chịu thua!{\i0}
Dialogue: 0,0:05:50.25,0:05:51.79,Default,,0,0,0,,{\i1}Nó chơi kiểu nuôi rùa…{\i0}
Dialogue: 0,0:05:54.52,0:05:58.32,Default,,0,0,0,,{\i1}Đấu pháp "nuôi rùa" của Guile{\i0}\N{\i1}là luôn giữ cần gạt ở góc chéo{\i0}
Dialogue: 0,0:05:58.46,0:06:00.66,Default,,0,0,0,,{\i1}để sẵn sàng ra một trong hai tuyệt chiêu{\i0}
Dialogue: 0,0:06:00.73,0:06:02.23,Default,,0,0,0,,{\i1}khi chờ đối thủ tấn công.{\i0}
Dialogue: 0,0:06:02.36,0:06:04.26,Default,,0,0,0,,{\i1}Chiêu đá thấp, Bom Sonic,{\i0}
Dialogue: 0,0:06:04.33,0:06:07.63,Default,,0,0,0,,{\i1}và đá lộn vòng có thể{\i0}\N{\i1}đẩy lùi bước tiến của đối thủ.{\i0}
Dialogue: 0,0:06:07.80,0:06:09.47,Default,,0,0,0,,{\i1}Đó là một đấu pháp cấm kị.{\i0}
Dialogue: 0,0:06:10.04,0:06:14.38,Default,,0,0,0,,{\i1}Nó cực kỳ hiệu quả{\i0}\N{\i1}khi dùng để đấu với Zangief.{\i0}
Dialogue: 0,0:06:14.84,0:06:16.11,Default,,0,0,0,,Chơi kiểu nuôi rùa à?
Dialogue: 0,0:06:16.34,0:06:20.31,Default,,0,0,0,,Thằng nhóc này\Ndùng cách bẩn thỉu, đê hèn nhất để thắng!
Dialogue: 0,0:06:22.72,0:06:25.79,Default,,0,0,0,,{\i1}Có bị bảo là chơi bẩn cũng được.{\i0}
Dialogue: 0,0:06:26.02,0:06:27.59,Default,,0,0,0,,{\i1}Tôi sẽ dùng mọi thủ đoạn{\i0}
Dialogue: 0,0:06:27.69,0:06:29.09,Default,,0,0,0,,{\i1}để loại bỏ cậu!{\i0}
Dialogue: 0,0:06:32.39,0:06:33.22,Default,,0,0,0,,{\i1}Bạn thắng!{\i0}
Dialogue: 0,0:06:33.29,0:06:35.53,Default,,0,0,0,,Lần đầu tiên con nhóc đó thua!
Dialogue: 0,0:06:41.47,0:06:43.21,Default,,0,0,0,,Nuôi rùa đúng là bất bại.
Dialogue: 0,0:06:44.47,0:06:45.67,Default,,0,0,0,,Nhìn kìa!
Dialogue: 0,0:06:45.87,0:06:48.37,Default,,0,0,0,,- Chơi một tay!\N- Nó chế giễu con bé kia à?
Dialogue: 0,0:06:48.57,0:06:50.34,Default,,0,0,0,,Thằng nhóc tỏ vẻ như không!
Dialogue: 0,0:06:50.58,0:06:54.55,Default,,0,0,0,,Nó muốn làm con nhỏ kia bẽ bàng đến cùng\Nđể rửa cái danh chơi bẩn.
Dialogue: 0,0:06:55.11,0:06:58.95,Default,,0,0,0,,{\i1}Ono, tôi không thể để cậu làm loạn{\i0}\N{\i1}ở vương quốc này được.{\i0}
Dialogue: 0,0:06:59.42,0:07:00.65,Default,,0,0,0,,{\i1}Văn, Toán, Thể dục,{\i0}
Dialogue: 0,0:07:00.72,0:07:03.49,Default,,0,0,0,,{\i1}Nhạc họa, Gia chánh,… cái gì tôi cũng dốt.{\i0}
Dialogue: 0,0:07:03.76,0:07:05.06,Default,,0,0,0,,{\i1}Chỉ giỏi mỗi cái này!{\i0}
Dialogue: 0,0:07:09.63,0:07:11.43,Default,,0,0,0,,Ai bảo chơi bằng một tay.
Dialogue: 0,0:07:11.56,0:07:13.43,Default,,0,0,0,,Giờ thì hòa một đều rồi.
Dialogue: 0,0:07:15.37,0:07:17.64,Default,,0,0,0,,Kìa, nó lại chơi bằng hai tay rồi.
Dialogue: 0,0:07:17.70,0:07:20.20,Default,,0,0,0,,Thành thật hơn rồi đấy, nhưng nhục quá.
Dialogue: 0,0:07:21.01,0:07:22.48,Default,,0,0,0,,Giờ là hiệp cuối.
Dialogue: 0,0:07:22.61,0:07:25.81,Default,,0,0,0,,Nếu lại dính chiêu nuôi rùa\Nthì con nhỏ kia sẽ thua.
Dialogue: 0,0:07:26.21,0:07:30.28,Default,,0,0,0,,Liệu nó có thua\Ntrước khi đạt 30 trận bất bại không?
Dialogue: 0,0:07:30.62,0:07:32.62,Default,,0,0,0,,{\i1}Vòng 3: Bắt đầu!{\i0}
Dialogue: 0,0:07:35.62,0:07:36.96,Default,,0,0,0,,Thằng nhóc này!
Dialogue: 0,0:07:37.32,0:07:40.39,Default,,0,0,0,,Nó không nuôi rùa nữa mà muốn chơi đẹp!
Dialogue: 0,0:07:40.69,0:07:45.16,Default,,0,0,0,,Là vòng cuối nên muốn thắng\Nđường đường chính chính. Rất có chí khí.
Dialogue: 0,0:07:45.40,0:07:47.40,Default,,0,0,0,,Sao không làm thế ngay từ đầu?
Dialogue: 0,0:07:50.17,0:07:51.51,Default,,0,0,0,,{\i1}Đường đường chính chính?{\i0}
Dialogue: 0,0:07:51.87,0:07:55.31,Default,,0,0,0,,{\i1}Mình chỉ cần chiến thắng mà thôi!{\i0}
Dialogue: 0,0:07:55.37,0:07:56.74,Default,,0,0,0,,{\i1}Chiêu vật tích tắc?{\i0}
Dialogue: 0,0:07:57.54,0:08:00.91,Default,,0,0,0,,{\i1}Vật tích tắc là ép đối thủ{\i0}\N{\i1}đỡ một đòn tấn công yếu{\i0}
Dialogue: 0,0:08:00.98,0:08:03.28,Default,,0,0,0,,{\i1}rồi lợi dụng cơ hội đó để vật.{\i0}
Dialogue: 0,0:08:03.35,0:08:06.19,Default,,0,0,0,,{\i1}Đối thủ không đề phòng{\i0}\N{\i1}có thể thua ngay lập tức.{\i0}
Dialogue: 0,0:08:06.25,0:08:07.55,Default,,0,0,0,,{\i1}Nhưng trong thi đấu,{\i0}
Dialogue: 0,0:08:07.62,0:08:10.12,Default,,0,0,0,,{\i1}đấu pháp cấm này có thể gây ra xích mích,{\i0}
Dialogue: 0,0:08:10.22,0:08:12.49,Default,,0,0,0,,{\i1}muốn dùng thì phải sẵn sàng quyết tử.{\i0}
Dialogue: 0,0:08:13.16,0:08:14.13,Default,,0,0,0,,{\i1}Nhưng…{\i0}
Dialogue: 0,0:08:14.49,0:08:16.73,Default,,0,0,0,,{\i1}nếu đối thủ là con bé này…{\i0}
Dialogue: 0,0:08:17.06,0:08:19.80,Default,,0,0,0,,{\i1}thì mình chẳng có gì…{\i0}
Dialogue: 0,0:08:20.13,0:08:21.37,Default,,0,0,0,,{\i1}phải sợ!{\i0}
Dialogue: 0,0:08:23.74,0:08:24.61,Default,,0,0,0,,Thắng rồi!
Dialogue: 0,0:08:30.94,0:08:32.28,Default,,0,0,0,,Cậu… Cậu làm gì…
Dialogue: 0,0:08:36.68,0:08:38.95,Default,,0,0,0,,Này, mấy đứa làm gì thế?
Dialogue: 0,0:08:39.05,0:08:40.22,Default,,0,0,0,,CÔ NÀNG BẤT BẠI
Dialogue: 0,0:08:40.29,0:08:43.36,Default,,0,0,0,,{\i1}Kể từ đó, số phận của chúng tôi{\i0}\N{\i1}đan xen lại với nhau.{\i0}
Dialogue: 0,0:08:51.76,0:08:52.66,Default,,0,0,0,,Yaguchi.
Dialogue: 0,0:08:53.07,0:08:54.47,Default,,0,0,0,,Yaguchi Haruo.
Dialogue: 0,0:08:54.67,0:08:56.91,Default,,0,0,0,,Nói cách đọc và ý nghĩa của từ này đi.
Dialogue: 0,0:08:59.41,0:09:01.71,Default,,0,0,0,,Đừng giả vờ mắt kém nên không đọc được.
Dialogue: 0,0:09:01.94,0:09:03.11,Default,,0,0,0,,Tôi biết thừa rồi.
Dialogue: 0,0:09:03.21,0:09:05.28,Default,,0,0,0,,Từ này rất hợp để nói về em đấy.
Dialogue: 0,0:09:05.51,0:09:07.28,Default,,0,0,0,,Hết tiết thì tra nghĩa đi nhé.
Dialogue: 0,0:09:08.41,0:09:10.51,Default,,0,0,0,,Học hành lẫn vẽ vời đều không giỏi.
Dialogue: 0,0:09:10.58,0:09:12.92,Default,,0,0,0,,Làm sao đây? Tương lai cậu ảm đạm quá.
Dialogue: 0,0:09:13.85,0:09:17.25,Default,,0,0,0,,{\i1}Chắc chắn bọn nó sẽ cười{\i0}\N{\i1}nếu mình nói muốn làm game thủ.{\i0}
Dialogue: 0,0:09:17.59,0:09:19.39,Default,,0,0,0,,{\i1}Mà có nghề đó không?{\i0}
Dialogue: 0,0:09:20.43,0:09:23.30,Default,,0,0,0,,So với Haruo,\Ntương lai của Ono vô cùng xán lạn.
Dialogue: 0,0:09:23.90,0:09:26.50,Default,,0,0,0,,Cậu ấy giỏi toàn diện\Nvà còn là con nhà giàu!
Dialogue: 0,0:09:26.57,0:09:28.97,Default,,0,0,0,,Lại còn xinh xắn nữa chứ!
