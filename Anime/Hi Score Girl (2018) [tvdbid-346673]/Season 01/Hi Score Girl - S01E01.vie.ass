Dialogue: 0,0:00:03.96,0:00:00.04,Default,,0,0,0,,LOẠT PHIM CỦA NETFLIX
Dialogue: 0,0:00:18.23,0:00:20.20,Default,,0,0,0,,{\i1}Tuyệt! Mười trận bất bại!{\i0}
Dialogue: 0,0:00:20.40,0:00:22.40,Default,,0,0,0,,{\i1}Thế nào, đám đông này đã khâm phục{\i0}
Dialogue: 0,0:00:22.50,0:00:24.80,Default,,0,0,0,,{\i1}kỹ năng thần thánh của mình chưa?{\i0}
Dialogue: 0,0:00:25.07,0:00:26.64,Default,,0,0,0,,Mau lên đi chứ!
Dialogue: 0,0:00:26.74,0:00:28.21,Default,,0,0,0,,{\i1}Chả ai phục mình cả!{\i0}
Dialogue: 0,0:00:28.27,0:00:29.97,Default,,0,0,0,,Cho người khác chơi với chứ!
Dialogue: 0,0:00:30.47,0:00:33.21,Default,,0,0,0,,{\i1}Chỉ thấy một hàng dài sốt ruột thúc ép!{\i0}
Dialogue: 0,0:00:37.35,0:00:39.22,Default,,0,0,0,,{\i1}Sao bên kia kinh ngạc vậy?{\i0}
Dialogue: 0,0:00:39.95,0:00:40.79,Default,,0,0,0,,Là con gái!
Dialogue: 0,0:00:40.98,0:00:42.92,Default,,0,0,0,,{\i1}Có con gái chơi {\i0}Street Fighter II{\i1}?{\i0}
Dialogue: 0,0:00:47.76,0:00:48.59,Default,,0,0,0,,{\i1}Không thể nào!{\i0}
Dialogue: 0,0:00:48.79,0:00:51.43,Default,,0,0,0,,{\i1}Không phải cậu ta học lớp 6B cùng mình à?{\i0}
Dialogue: 0,0:00:51.53,0:00:52.70,Default,,0,0,0,,{\i1}Ono Akira đây mà!{\i0}
Dialogue: 0,0:00:55.40,0:00:56.40,Default,,0,0,0,,Zangief à{\i1}?{\i0}
Dialogue: 0,0:00:58.60,0:01:02.44,Default,,0,0,0,,NGUYÊN TÁC: OSHIKIRI RENSUKE
Dialogue: 0,0:02:44.31,0:02:45.24,Default,,0,0,0,,VÒNG 1
Dialogue: 0,0:02:45.38,0:02:47.38,Default,,0,0,0,,{\an8}{\i1}Chiến tranh Vùng Vịnh nổ ra.{\i0}
Dialogue: 0,0:02:48.88,0:02:51.88,Default,,0,0,0,,{\i1}Ngọn Fugendake của dãy Unzen{\i0}\N{\i1}ở Nagasaki phun trào.{\i0}
Dialogue: 0,0:02:53.62,0:02:57.46,Default,,0,0,0,,{\i1}Năm 1991: Năm của những sự kiện{\i0}\N{\i1}làm chấn động thế giới!{\i0}
Dialogue: 0,0:02:57.52,0:02:58.99,Default,,0,0,0,,{\an8}CHIẾN BINH THẾ GIỚI
Dialogue: 0,0:03:02.13,0:03:03.53,Default,,0,0,0,,Thật sao trời?
Dialogue: 0,0:03:03.59,0:03:05.03,Default,,0,0,0,,{\i1}Khỉ thật.{\i0}
Dialogue: 0,0:03:05.43,0:03:06.26,Default,,0,0,0,,{\i1}Khỉ thật!{\i0}
Dialogue: 0,0:03:09.53,0:03:11.79,Default,,0,0,0,,{\i1}Thế là đi tong 500 yên tiêu vặt…{\i0}
Dialogue: 0,0:03:18.61,0:03:20.61,Default,,0,0,0,,Nhóc này lại đấu à?
Dialogue: 0,0:03:22.65,0:03:24.22,Default,,0,0,0,,Bao nhiêu lần rồi nhỉ?
Dialogue: 0,0:03:27.12,0:03:28.32,Default,,0,0,0,,{\i1}Mình chả hiểu gì cả…{\i0}
Dialogue: 0,0:03:28.48,0:03:31.18,Default,,0,0,0,,{\i1}Cậu ta đâu có giống kiểu người sẽ đến đây!{\i0}
Dialogue: 0,0:03:31.82,0:03:34.06,Default,,0,0,0,,{\i1}Học giỏi nhất, được thầy yêu bạn mến,{\i0}
Dialogue: 0,0:03:34.12,0:03:36.22,Default,,0,0,0,,{\i1}lại còn là tiểu thư nhà giàu!{\i0}
Dialogue: 0,0:03:37.49,0:03:40.29,Default,,0,0,0,,{\i1}Cậu ta sống ở một thế giới hoàn toàn khác.{\i0}
Dialogue: 0,0:03:40.86,0:03:43.30,Default,,0,0,0,,{\i1}Hoàn toàn trái ngược với một đứa{\i0}
Dialogue: 0,0:03:43.37,0:03:46.67,Default,,0,0,0,,{\i1}luôn cắm rễ{\i0}\N{\i1}ở quán điện tử sặc mùi thuốc lá như mình!{\i0}
Dialogue: 0,0:03:47.30,0:03:50.67,Default,,0,0,0,,{\i1}Rốt cuộc cậu ta đã làm gì{\i0}\N{\i1}để lưu lạc đến đây?{\i0}
Dialogue: 0,0:03:56.38,0:03:57.21,Default,,0,0,0,,{\i1}Bạn thắng!{\i0}
Dialogue: 0,0:03:57.38,0:03:58.51,Default,,0,0,0,,Không thể nào!
Dialogue: 0,0:03:58.98,0:04:00.58,Default,,0,0,0,,Thắng 28 trận liên tiếp!
Dialogue: 0,0:04:00.65,0:04:02.49,Default,,0,0,0,,Con nhỏ này giỏi quá!
Dialogue: 0,0:04:02.85,0:04:05.62,Default,,0,0,0,,Mấy đứa quen mặt ở đây cũng đấu không lại!
Dialogue: 0,0:04:06.56,0:04:07.66,Default,,0,0,0,,Tránh ra!
Dialogue: 0,0:04:07.79,0:04:08.96,Default,,0,0,0,,Đến lượt tao.
Dialogue: 0,0:04:09.09,0:04:10.83,Default,,0,0,0,,Tao sẽ chặn nó lại!
Dialogue: 0,0:04:13.53,0:04:16.67,Default,,0,0,0,,{\i1}Mình đã chơi {\i0}Street Fighter II\N{\i1}từ lúc mới phát hành!{\i0}
Dialogue: 0,0:04:17.33,0:04:20.50,Default,,0,0,0,,{\i1}Yaguchi Haruo này rất tự tin{\i0}\N{\i1}vào trình độ của mình.{\i0}
Dialogue: 0,0:04:20.84,0:04:21.67,Default,,0,0,0,,{\i1}Không tin nổi{\i0}
Dialogue: 0,0:04:21.77,0:04:23.87,Default,,0,0,0,,{\i1}là Ono làm cả lũ con trai bẽ mặt{\i0}
Dialogue: 0,0:04:23.97,0:04:26.74,Default,,0,0,0,,{\i1}với chuỗi 28 trận bất bại không tưởng này.{\i0}
Dialogue: 0,0:04:27.24,0:04:28.11,Default,,0,0,0,,{\i1}Chưa nói là…{\i0}
Dialogue: 0,0:04:28.21,0:04:29.61,Default,,0,0,0,,{\i1}cậu ta dùng Zangief!{\i0}
Dialogue: 0,0:04:29.81,0:04:33.38,Default,,0,0,0,,{\i1}Có những người còn không{\i0}\N{\i1}ra được chiêu Shoryuken cơ bản.{\i0}
Dialogue: 0,0:04:33.52,0:04:35.19,Default,,0,0,0,,{\i1}Thế mà cậu ta ra được chiêu{\i0}
Dialogue: 0,0:04:35.25,0:04:37.29,Default,,0,0,0,,{\i1}vật xoay tròn Screw Pile-Driver!{\i0}
Dialogue: 0,0:04:37.35,0:04:39.55,Default,,0,0,0,,{\i1}Nhìn cậu ta ra chiêu mới dễ làm sao!{\i0}
Dialogue: 0,0:04:40.62,0:04:42.36,Default,,0,0,0,,{\i1}Tức quá đi!{\i0}
Dialogue: 0,0:04:43.06,0:04:47.13,Default,,0,0,0,,{\i1}Mãi mình mới dám làm trái{\i0}\N{\i1}quy định của trường, vượt qua con đường{\i0}
Dialogue: 0,0:04:47.33,0:04:50.83,Default,,0,0,0,,{\i1}xe chật như nêm này{\i0}\N{\i1}để đến quán điện tử ở khu phố bên cạnh,{\i0}
Dialogue: 0,0:04:51.10,0:04:52.84,Default,,0,0,0,,{\i1}thánh địa của mình!{\i0}
Dialogue: 0,0:04:53.14,0:04:56.34,Default,,0,0,0,,{\i1}Thế mà cậu ta lại đến phá hoại.{\i0}
Dialogue: 0,0:04:56.64,0:04:57.71,Default,,0,0,0,,{\i1}Không được.{\i0}
Dialogue: 0,0:04:57.97,0:05:00.37,Default,,0,0,0,,{\i1}Vậy nên, với đồng 50 yên cuối cùng này,{\i0}
Dialogue: 0,0:05:00.51,0:05:02.88,Default,,0,0,0,,{\i1}tôi sẽ làm cậu không dám ló mặt đến nữa!{\i0}
Dialogue: 0,0:05:03.58,0:05:04.55,Default,,0,0,0,,Khỉ thật!
Dialogue: 0,0:05:05.32,0:05:06.95,Default,,0,0,0,,Vậy là 29 trận bất bại!
Dialogue: 0,0:05:07.38,0:05:08.95,Default,,0,0,0,,Thêm một trận nữa là 30!
Dialogue: 0,0:05:14.72,0:05:15.55,Default,,0,0,0,,CÓ THÁCH ĐẤU!
Dialogue: 0,0:05:22.77,0:05:24.77,Default,,0,0,0,,Gì thế này? Lại là nó à?
Dialogue: 0,0:05:24.83,0:05:26.90,Default,,0,0,0,,Đúng là không biết sợ gì cả!
Dialogue: 0,0:05:29.37,0:05:31.44,Default,,0,0,0,,{\i1}Mình không muốn dùng chiêu này,{\i0}
Dialogue: 0,0:05:31.61,0:05:35.18,Default,,0,0,0,,{\i1}nhưng nó sẽ khiến cả Ono siêu đẳng{\i0}\N{\i1}cũng phải chịu thua!{\i0}
Dialogue: 0,0:05:40.25,0:05:41.79,Default,,0,0,0,,{\i1}Nó chơi kiểu nuôi rùa…{\i0}
Dialogue: 0,0:05:44.52,0:05:48.32,Default,,0,0,0,,{\i1}Đấu pháp "nuôi rùa" của Guile{\i0}\N{\i1}là luôn giữ cần gạt ở góc chéo{\i0}
Dialogue: 0,0:05:48.46,0:05:50.66,Default,,0,0,0,,{\i1}để sẵn sàng ra một trong hai tuyệt chiêu{\i0}
Dialogue: 0,0:05:50.73,0:05:52.23,Default,,0,0,0,,{\i1}khi chờ đối thủ tấn công.{\i0}
Dialogue: 0,0:05:52.36,0:05:54.26,Default,,0,0,0,,{\i1}Chiêu đá thấp, Bom Sonic,{\i0}
Dialogue: 0,0:05:54.33,0:05:57.63,Default,,0,0,0,,{\i1}và đá lộn vòng có thể{\i0}\N{\i1}đẩy lùi bước tiến của đối thủ.{\i0}
Dialogue: 0,0:05:57.80,0:05:59.47,Default,,0,0,0,,{\i1}Đó là một đấu pháp cấm kị.{\i0}
Dialogue: 0,0:06:00.04,0:06:04.38,Default,,0,0,0,,{\i1}Nó cực kỳ hiệu quả{\i0}\N{\i1}khi dùng để đấu với Zangief.{\i0}
Dialogue: 0,0:06:04.84,0:06:06.11,Default,,0,0,0,,Chơi kiểu nuôi rùa à?
Dialogue: 0,0:06:06.34,0:06:10.31,Default,,0,0,0,,Thằng nhóc này\Ndùng cách bẩn thỉu, đê hèn nhất để thắng!
Dialogue: 0,0:06:12.72,0:06:15.79,Default,,0,0,0,,{\i1}Có bị bảo là chơi bẩn cũng được.{\i0}
Dialogue: 0,0:06:16.02,0:06:17.59,Default,,0,0,0,,{\i1}Tôi sẽ dùng mọi thủ đoạn{\i0}
Dialogue: 0,0:06:17.69,0:06:19.09,Default,,0,0,0,,{\i1}để loại bỏ cậu!{\i0}
Dialogue: 0,0:06:22.39,0:06:23.22,Default,,0,0,0,,{\i1}Bạn thắng!{\i0}
Dialogue: 0,0:06:23.29,0:06:25.53,Default,,0,0,0,,Lần đầu tiên con nhóc đó thua!
Dialogue: 0,0:06:31.47,0:06:33.21,Default,,0,0,0,,Nuôi rùa đúng là bất bại.
Dialogue: 0,0:06:34.47,0:06:35.67,Default,,0,0,0,,Nhìn kìa!
Dialogue: 0,0:06:35.87,0:06:38.37,Default,,0,0,0,,- Chơi một tay!\N- Nó chế giễu con bé kia à?
Dialogue: 0,0:06:38.57,0:06:40.34,Default,,0,0,0,,Thằng nhóc tỏ vẻ như không!
Dialogue: 0,0:06:40.58,0:06:44.55,Default,,0,0,0,,Nó muốn làm con nhỏ kia bẽ bàng đến cùng\Nđể rửa cái danh chơi bẩn.
Dialogue: 0,0:06:45.11,0:06:48.95,Default,,0,0,0,,{\i1}Ono, tôi không thể để cậu làm loạn{\i0}\N{\i1}ở vương quốc này được.{\i0}
Dialogue: 0,0:06:49.42,0:06:50.65,Default,,0,0,0,,{\i1}Văn, Toán, Thể dục,{\i0}
Dialogue: 0,0:06:50.72,0:06:53.49,Default,,0,0,0,,{\i1}Nhạc họa, Gia chánh,… cái gì tôi cũng dốt.{\i0}
Dialogue: 0,0:06:53.76,0:06:55.06,Default,,0,0,0,,{\i1}Chỉ giỏi mỗi cái này!{\i0}
Dialogue: 0,0:06:59.63,0:07:01.43,Default,,0,0,0,,Ai bảo chơi bằng một tay.
Dialogue: 0,0:07:01.56,0:07:03.43,Default,,0,0,0,,Giờ thì hòa một đều rồi.
Dialogue: 0,0:07:05.37,0:07:07.64,Default,,0,0,0,,Kìa, nó lại chơi bằng hai tay rồi.
Dialogue: 0,0:07:07.70,0:07:10.20,Default,,0,0,0,,Thành thật hơn rồi đấy, nhưng nhục quá.
Dialogue: 0,0:07:11.01,0:07:12.48,Default,,0,0,0,,Giờ là hiệp cuối.
Dialogue: 0,0:07:12.61,0:07:15.81,Default,,0,0,0,,Nếu lại dính chiêu nuôi rùa\Nthì con nhỏ kia sẽ thua.
Dialogue: 0,0:07:16.21,0:07:20.28,Default,,0,0,0,,Liệu nó có thua\Ntrước khi đạt 30 trận bất bại không?
Dialogue: 0,0:07:20.62,0:07:22.62,Default,,0,0,0,,{\i1}Vòng 3: Bắt đầu!{\i0}
Dialogue: 0,0:07:25.62,0:07:26.96,Default,,0,0,0,,Thằng nhóc này!
Dialogue: 0,0:07:27.32,0:07:30.39,Default,,0,0,0,,Nó không nuôi rùa nữa mà muốn chơi đẹp!
Dialogue: 0,0:07:30.69,0:07:35.16,Default,,0,0,0,,Là vòng cuối nên muốn thắng\Nđường đường chính chính. Rất có chí khí.
Dialogue: 0,0:07:35.40,0:07:37.40,Default,,0,0,0,,Sao không làm thế ngay từ đầu?
Dialogue: 0,0:07:40.17,0:07:41.51,Default,,0,0,0,,{\i1}Đường đường chính chính?{\i0}
Dialogue: 0,0:07:41.87,0:07:45.31,Default,,0,0,0,,{\i1}Mình chỉ cần chiến thắng mà thôi!{\i0}
Dialogue: 0,0:07:45.37,0:07:46.74,Default,,0,0,0,,{\i1}Chiêu vật tích tắc?{\i0}
Dialogue: 0,0:07:47.54,0:07:50.91,Default,,0,0,0,,{\i1}Vật tích tắc là ép đối thủ{\i0}\N{\i1}đỡ một đòn tấn công yếu{\i0}
Dialogue: 0,0:07:50.98,0:07:53.28,Default,,0,0,0,,{\i1}rồi lợi dụng cơ hội đó để vật.{\i0}
Dialogue: 0,0:07:53.35,0:07:56.19,Default,,0,0,0,,{\i1}Đối thủ không đề phòng{\i0}\N{\i1}có thể thua ngay lập tức.{\i0}
Dialogue: 0,0:07:56.25,0:07:57.55,Default,,0,0,0,,{\i1}Nhưng trong thi đấu,{\i0}
Dialogue: 0,0:07:57.62,0:08:00.12,Default,,0,0,0,,{\i1}đấu pháp cấm này có thể gây ra xích mích,{\i0}
Dialogue: 0,0:08:00.22,0:08:02.49,Default,,0,0,0,,{\i1}muốn dùng thì phải sẵn sàng quyết tử.{\i0}
Dialogue: 0,0:08:03.16,0:08:04.13,Default,,0,0,0,,{\i1}Nhưng…{\i0}
Dialogue: 0,0:08:04.49,0:08:06.73,Default,,0,0,0,,{\i1}nếu đối thủ là con bé này…{\i0}
Dialogue: 0,0:08:07.06,0:08:09.80,Default,,0,0,0,,{\i1}thì mình chẳng có gì…{\i0}
Dialogue: 0,0:08:10.13,0:08:11.37,Default,,0,0,0,,{\i1}phải sợ!{\i0}
Dialogue: 0,0:08:13.74,0:08:14.61,Default,,0,0,0,,Thắng rồi!
Dialogue: 0,0:08:20.94,0:08:22.28,Default,,0,0,0,,Cậu… Cậu làm gì…
Dialogue: 0,0:08:26.68,0:08:28.95,Default,,0,0,0,,Này, mấy đứa làm gì thế?
Dialogue: 0,0:08:29.05,0:08:30.22,Default,,0,0,0,,CÔ NÀNG BẤT BẠI
Dialogue: 0,0:08:30.29,0:08:33.36,Default,,0,0,0,,{\i1}Kể từ đó, số phận của chúng tôi{\i0}\N{\i1}đan xen lại với nhau.{\i0}
Dialogue: 0,0:08:41.76,0:08:42.66,Default,,0,0,0,,Yaguchi.
Dialogue: 0,0:08:43.07,0:08:44.47,Default,,0,0,0,,Yaguchi Haruo.
Dialogue: 0,0:08:44.67,0:08:46.91,Default,,0,0,0,,Nói cách đọc và ý nghĩa của từ này đi.
Dialogue: 0,0:08:49.41,0:08:51.71,Default,,0,0,0,,Đừng giả vờ mắt kém nên không đọc được.
Dialogue: 0,0:08:51.94,0:08:53.11,Default,,0,0,0,,Tôi biết thừa rồi.
Dialogue: 0,0:08:53.21,0:08:55.28,Default,,0,0,0,,Từ này rất hợp để nói về em đấy.
Dialogue: 0,0:08:55.51,0:08:57.28,Default,,0,0,0,,Hết tiết thì tra nghĩa đi nhé.
Dialogue: 0,0:08:58.41,0:09:00.51,Default,,0,0,0,,Học hành lẫn vẽ vời đều không giỏi.
Dialogue: 0,0:09:00.58,0:09:02.92,Default,,0,0,0,,Làm sao đây? Tương lai cậu ảm đạm quá.
Dialogue: 0,0:09:03.85,0:09:07.25,Default,,0,0,0,,{\i1}Chắc chắn bọn nó sẽ cười{\i0}\N{\i1}nếu mình nói muốn làm game thủ.{\i0}
Dialogue: 0,0:09:07.59,0:09:09.39,Default,,0,0,0,,{\i1}Mà có nghề đó không?{\i0}
Dialogue: 0,0:09:10.43,0:09:13.30,Default,,0,0,0,,So với Haruo,\Ntương lai của Ono vô cùng xán lạn.
Dialogue: 0,0:09:13.90,0:09:16.50,Default,,0,0,0,,Cậu ấy giỏi toàn diện\Nvà còn là con nhà giàu!
Dialogue: 0,0:09:16.57,0:09:18.97,Default,,0,0,0,,Lại còn xinh xắn nữa chứ!
Dialogue: 0,0:09:19.07,0:09:21.54,Default,,0,0,0,,Đúng là đóa hoa trên vách núi.
Dialogue: 0,0:09:21.60,0:09:23.60,Default,,0,0,0,,Mấy đứa con gái khác chả sánh nổi.
Dialogue: 0,0:09:23.71,0:09:26.48,Default,,0,0,0,,Không biết sau giờ học,\NOno làm gì để giải trí!
Dialogue: 0,0:09:26.81,0:09:30.11,Default,,0,0,0,,Nghe nói cậu ấy học nhiều lắm,\Nchả rảnh rỗi gì đâu.
Dialogue: 0,0:09:30.41,0:09:32.41,Default,,0,0,0,,Học piano, trà đạo, thư pháp.
Dialogue: 0,0:09:32.68,0:09:34.68,Default,,0,0,0,,Cậu ấy ở một đẳng cấp khác đấy.
Dialogue: 0,0:09:35.02,0:09:38.02,Default,,0,0,0,,{\i1}Muốn biết con nhỏ đó làm gì{\i0}\N{\i1}sau giờ học hả?{\i0}
Dialogue: 0,0:09:38.45,0:09:40.05,Default,,0,0,0,,{\i1}Đi chơi game thùng đấy!{\i0}
Dialogue: 0,0:09:44.26,0:09:45.39,Default,,0,0,0,,{\i1}Bạn thắng!{\i0}
Dialogue: 0,0:09:50.00,0:09:51.50,Default,,0,0,0,,{\i1}Về nước bằng Dhalsim?{\i0}
