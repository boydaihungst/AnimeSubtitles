Dialogue: 0,0:16:34.06,0:16:38.80,Default,,0,0,0,,{\an8}{\i1}Mình sẽ dần xây dựng lại{\i0}\N{\i1}truyền thuyết Yaguchi thần thánh!{\i0}
Dialogue: 0,0:16:39.43,0:16:42.07,Default,,0,0,0,,{\i1}Có thể tôi tụt lại phía sau,{\i0}\N{\i1}nhưng sẽ có ngày{\i0}
Dialogue: 0,0:16:42.23,0:16:44.07,Default,,0,0,0,,{\i1}tôi đuổi kịp cậu, Ono!{\i0}
Dialogue: 0,0:16:44.64,0:16:47.41,Default,,0,0,0,,Ba trăm yên đổi được 15 xèng à?\NGhê quá vậy!
Dialogue: 0,0:16:47.57,0:16:49.94,Default,,0,0,0,,Đổi 500 yên được 30 xèng. Khó chọn thật.
Dialogue: 0,0:16:54.18,0:16:55.15,Default,,0,0,0,,{\i1}Ono…{\i0}
Dialogue: 0,0:16:57.98,0:16:59.82,Default,,0,0,0,,- Chào!\N{\i1}- Là Hidaka.{\i0}
Dialogue: 0,0:16:59.89,0:17:01.53,Default,,0,0,0,,Nhỏ hư đốn này đến rồi.
Dialogue: 0,0:17:01.65,0:17:03.82,Default,,0,0,0,,Cái mặt rõ là thất vọng đó là sao?
Dialogue: 0,0:17:04.59,0:17:07.33,Default,,0,0,0,,Gần đây tớ nằm mơ thấy cậu.
Dialogue: 0,0:17:07.49,0:17:08.32,Default,,0,0,0,,Sao?
Dialogue: 0,0:17:09.06,0:17:11.06,Default,,0,0,0,,{\i1}Là ác mộng. Cậu thắng tớ 100 trận{\i0}
Dialogue: 0,0:17:11.13,0:17:14.00,Default,,0,0,0,,{\i1}và tớ bị Neinhalt Sieger đuổi bắt.{\i0}
Dialogue: 0,0:17:14.77,0:17:16.17,Default,,0,0,0,,{\i1}Mơ kiểu gì vậy trời?{\i0}
Dialogue: 0,0:17:16.54,0:17:17.71,Default,,0,0,0,,{\i1}Nhưng mình vẫn vui.{\i0}
Dialogue: 0,0:17:18.17,0:17:21.21,Default,,0,0,0,,Cái con nhỏ này, cười gì hả?
Dialogue: 0,0:17:21.67,0:17:24.91,Default,,0,0,0,,Thì gần đây cậu hay đến quán game hơn rồi.
Dialogue: 0,0:17:25.41,0:17:28.81,Default,,0,0,0,,Chính cậu làm bừng lên\Ntinh thần quyết thắng của tớ đấy.
Dialogue: 0,0:17:29.52,0:17:30.79,Default,,0,0,0,,Vậy cơ đấy.
Dialogue: 0,0:17:30.88,0:17:32.62,Default,,0,0,0,,Đừng "vậy cơ đấy" với tớ.
Dialogue: 0,0:17:32.75,0:17:34.49,Default,,0,0,0,,Tự dưng cậu trở nên mạnh thế.
Dialogue: 0,0:17:35.02,0:17:37.92,Default,,0,0,0,,{\i1}Cứ như mình đang bị xem thường vậy.{\i0}
Dialogue: 0,0:17:38.16,0:17:41.06,Default,,0,0,0,,{\i1}Mình không thể chịu được{\i0}\N{\i1}việc bị Hidaka chế giễu.{\i0}
Dialogue: 0,0:17:41.66,0:17:44.00,Default,,0,0,0,,{\i1}Lần đầu thua Ono, mình cũng nghĩ:{\i0}
Dialogue: 0,0:17:44.10,0:17:48.07,Default,,0,0,0,,{\i1}"Sao lại thua nhỏ đó?"{\i0}\N{\i1}Nhưng vì uất ức nên mình mới mạnh lên.{\i0}
Dialogue: 0,0:17:49.23,0:17:50.57,Default,,0,0,0,,Đã đến nước này,
Dialogue: 0,0:17:50.67,0:17:54.44,Default,,0,0,0,,tớ sẽ bắt cậu đấu\Nđến khi cậu tâm phục khẩu phục mới thôi!
Dialogue: 0,0:17:54.64,0:17:56.81,Default,,0,0,0,,Tớ không ngại đâu.
Dialogue: 0,0:17:57.08,0:17:59.52,Default,,0,0,0,,Biết ngựa lùn khác gì ngựa thường không?
Dialogue: 0,0:17:59.88,0:18:01.02,Default,,0,0,0,,Ngựa thường to hơn.
Dialogue: 0,0:18:01.15,0:18:02.75,Default,,0,0,0,,{\i1}- Hidaka à?{\i0}\N- Ngựa lùn nhỏ.
Dialogue: 0,0:18:03.18,0:18:04.05,Default,,0,0,0,,Này!
Dialogue: 0,0:18:04.15,0:18:06.02,Default,,0,0,0,,{\i1}Xin thông báo kết quả cuộc đua.{\i0}
Dialogue: 0,0:18:06.12,0:18:08.76,Default,,0,0,0,,{\i1}Giải nhất, số năm. Giải nhì, số một.{\i0}
Dialogue: 0,0:18:08.82,0:18:10.82,Default,,0,0,0,,Miyao… xem này!
Dialogue: 0,0:18:10.96,0:18:13.20,Default,,0,0,0,,Tao cược ba xèng với tỉ lệ một ăn 999,
Dialogue: 0,0:18:13.49,0:18:14.46,Default,,0,0,0,,và thắng rồi!
Dialogue: 0,0:18:14.99,0:18:17.33,Default,,0,0,0,,Tao thắng 3000 xèng rồi!
Dialogue: 0,0:18:17.50,0:18:19.00,Default,,0,0,0,,Làm sao đây?
Dialogue: 0,0:18:19.10,0:18:20.67,Default,,0,0,0,,Tao thấy hơi sợ!
Dialogue: 0,0:18:20.80,0:18:21.87,Default,,0,0,0,,Mày im giùm đi?
Dialogue: 0,0:18:22.50,0:18:25.14,Default,,0,0,0,,{\i1}Ra vậy… Vậy là Hidaka vẫn thích…{\i0}
Dialogue: 0,0:18:26.04,0:18:30.04,Default,,0,0,0,,{\i1}Mà nói mới nhớ, Haruo,{\i0}\N{\i1}nếu Ono thấy mày ở đây thì tính sao?{\i0}
Dialogue: 0,0:18:30.68,0:18:34.55,Default,,0,0,0,,Lần trước cậu thắng tớ,\Nnhưng lần này khác rồi.
Dialogue: 0,0:18:34.71,0:18:37.98,Default,,0,0,0,,Tớ đã tập {\i1}Samurai Shodown{\i0} trên Game Boy.
Dialogue: 0,0:18:38.68,0:18:41.05,Default,,0,0,0,,Chơi trên Game Boy thì có tính không?
Dialogue: 0,0:18:41.22,0:18:42.86,Default,,0,0,0,,Con nhỏ dễ ghét này!
Dialogue: 0,0:18:43.59,0:18:45.89,Default,,0,0,0,,{\i1}Mình luôn chọn Hanzo. Còn Hidaka{\i0} chọn{\i1}…{\i0}
Dialogue: 0,0:18:46.33,0:18:47.83,Default,,0,0,0,,{\i1}Neinhalt Sieger à?{\i0}
Dialogue: 0,0:18:48.69,0:18:52.26,Default,,0,0,0,,Thật sự thì cậu chọn nhân vật\Ndựa trên cơ sở nào vậy hả?
Dialogue: 0,0:18:52.46,0:18:55.26,Default,,0,0,0,,Tự dưng lại chọn Neinhalt Sieger.
Dialogue: 0,0:18:55.93,0:18:58.80,Default,,0,0,0,,Tớ muốn\Nbiến ác mộng của cậu thành hiện thực.
Dialogue: 0,0:18:59.64,0:19:03.31,Default,,0,0,0,,Hidaka, từ hồi lên cấp ba,\Ncậu đổi tính hoàn toàn đấy.
Dialogue: 0,0:19:03.84,0:19:08.15,Default,,0,0,0,,Bao lâu rồi tớ mới ngồi cạnh cậu\Nđể chơi game thế này nhỉ?
Dialogue: 0,0:19:08.91,0:19:11.35,Default,,0,0,0,,Hình như là từ hồi chuyến ngoại khóa.
Dialogue: 0,0:19:11.82,0:19:14.36,Default,,0,0,0,,Lúc đó tớ bất ngờ lắm.
Dialogue: 0,0:19:15.79,0:19:16.83,Default,,0,0,0,,Chiêu Sieger Cup?
Dialogue: 0,0:19:17.69,0:19:18.86,Default,,0,0,0,,Chiêu Falke Nagel?
Dialogue: 0,0:19:19.46,0:19:22.36,Default,,0,0,0,,Không tin nổi\Nlà ngày đầu tiên mà bọn mình bị lạc.
Dialogue: 0,0:19:22.69,0:19:24.13,Default,,0,0,0,,Mặc dù đáng sợ,
Dialogue: 0,0:19:24.30,0:19:26.80,Default,,0,0,0,,nhưng đó cũng là một kỷ niệm rất vui.
Dialogue: 0,0:19:27.73,0:19:29.90,Default,,0,0,0,,Chiêu Elephant Greed!
Dialogue: 0,0:19:30.90,0:19:33.04,Default,,0,0,0,,Vừa hồi tưởng chuyện cũ
Dialogue: 0,0:19:33.11,0:19:36.55,Default,,0,0,0,,vừa biến chiêu Siegar Cup\Nthành ba tuyệt chiêu liên tục!
Dialogue: 0,0:19:38.34,0:19:39.54,Default,,0,0,0,,KẾT THÚC!
Dialogue: 0,0:19:40.31,0:19:42.61,Default,,0,0,0,,Cậu ta phản đòn bằng chiêu Firestorm?
Dialogue: 0,0:19:43.52,0:19:45.22,Default,,0,0,0,,{\i1}Neinhalt Seiger!{\i0}
Dialogue: 0,0:19:45.28,0:19:46.18,Default,,0,0,0,,CHIẾN THẮNG!
Dialogue: 0,0:19:49.19,0:19:50.62,Default,,0,0,0,,{\i1}Cậu ta mạnh thật!{\i0}
Dialogue: 0,0:19:50.76,0:19:54.40,Default,,0,0,0,,{\i1}Không tin nổi là nhỏ Hidaka{\i0}\N{\i1}mà mình xem thường giỏi thế này!{\i0}
Dialogue: 0,0:19:55.03,0:19:58.87,Default,,0,0,0,,{\i1}Mình bực đến nỗi muốn nhai đầu cậu ta!{\i0}
Dialogue: 0,0:19:59.13,0:20:00.26,Default,,0,0,0,,{\i1}Wulf Fangen!{\i0}
Dialogue: 0,0:20:01.27,0:20:02.84,Default,,0,0,0,,- Này, Hidaka!\N- Gì thế?
Dialogue: 0,0:20:03.30,0:20:05.74,Default,,0,0,0,,Có phải anh ta nói "Cái cu Fangen" không?
Dialogue: 0,0:20:06.10,0:20:07.60,Default,,0,0,0,,Cậu… Cậu nói gì vậy?
Dialogue: 0,0:20:07.67,0:20:10.47,Default,,0,0,0,,Chắc chắn là nói "Wulf Fangen",\Ntên chiêu thức.
Dialogue: 0,0:20:10.88,0:20:12.18,Default,,0,0,0,,Nếu nghe kĩ,
Dialogue: 0,0:20:12.28,0:20:14.42,Default,,0,0,0,,không phải rất giống nói bậy sao?
Dialogue: 0,0:20:14.51,0:20:15.34,Default,,0,0,0,,Hả?
Dialogue: 0,0:20:17.15,0:20:18.65,Default,,0,0,0,,KẾT THÚC!
Dialogue: 0,0:20:19.15,0:20:20.25,Default,,0,0,0,,{\i1}Kết thúc!{\i0}
Dialogue: 0,0:20:22.72,0:20:24.02,Default,,0,0,0,,{\i1}Hattori Hanzo!{\i0}
Dialogue: 0,0:20:24.59,0:20:26.69,Default,,0,0,0,,Tớ thắng một hiệp rồi, Hidaka!
Dialogue: 0,0:20:27.06,0:20:30.46,Default,,0,0,0,,{\i1}Nói mấy câu đùa bậy{\i0}\N{\i1}làm cậu ta phân tâm thì mình sẽ thắng.{\i0}
Dialogue: 0,0:20:30.66,0:20:32.03,Default,,0,0,0,,TRẬN ĐẤU KẾT THÚC!
Dialogue: 0,0:20:33.90,0:20:37.44,Default,,0,0,0,,{\i1}Cậu ta rút cạn máu của mình{\i0}\N{\i1}bằng chiêu Vulcan Exploision.{\i0}
Dialogue: 0,0:20:39.67,0:20:42.34,Default,,0,0,0,,Tớ thắng được mỗi một hiệp,\Nmà là nhờ đùa bậy.
Dialogue: 0,0:20:43.98,0:20:47.25,Default,,0,0,0,,{\i1}Cuối cùng mình cũng{\i0}\N{\i1}ngang hàng với Yaguchi rồi.{\i0}
Dialogue: 0,0:20:48.35,0:20:50.35,Default,,0,0,0,,Nữa đi. Lần này chơi trò khác.
Dialogue: 0,0:20:50.55,0:20:52.45,Default,,0,0,0,,{\i1}THE KING OF FIGHTERS '94{\i0}
Dialogue: 0,0:20:53.35,0:20:56.52,Default,,0,0,0,,{\i1}Mình biết rõ là{\i0}\N{\i1}cậu hoàn toàn dửng dưng với mình.{\i0}
Dialogue: 0,0:20:56.69,0:20:58.59,Default,,0,0,0,,{\i1}Haoh Shoko Ken!{\i0}
Dialogue: 0,0:21:04.26,0:21:06.00,Default,,0,0,0,,Đấu sĩ của mình thua em gái…
Dialogue: 0,0:21:06.10,0:21:09.64,Default,,0,0,0,,{\i1}Nếu thắng liên tục{\i0}\N{\i1}sẽ làm cậu ấy chú ý đến mình hơn…{\i0}
Dialogue: 0,0:21:09.90,0:21:10.97,Default,,0,0,0,,Trận nữa!
Dialogue: 0,0:21:11.80,0:21:14.47,Default,,0,0,0,,{\i1}Thì mình quyết không thua!{\i0}
Dialogue: 0,0:21:18.21,0:21:21.91,Default,,0,0,0,,Lại… Lại thua rồi!
Dialogue: 0,0:21:24.02,0:21:26.39,Default,,0,0,0,,Sao vậy, Yaguchi?
Dialogue: 0,0:21:26.69,0:21:30.06,Default,,0,0,0,,Có lẽ cậu nên bắt đầu lại\Nbằng trò {\i1}Yie Ar Kung-Fu.{\i0}
Dialogue: 0,0:21:31.19,0:21:33.89,Default,,0,0,0,,Thế này có khi tớ thắng cả trò {\i1}SF II{\i0} đấy.
Dialogue: 0,0:21:35.29,0:21:38.03,Default,,0,0,0,,Tớ cứ tưởng cậu sẽ trụ được lâu hơn chứ.
Dialogue: 0,0:21:39.46,0:21:41.20,Default,,0,0,0,,Thôi được!
Dialogue: 0,0:21:41.30,0:21:44.40,Default,,0,0,0,,Tớ sẽ học lại từ {\i1}Yie Ar Kung-Fu{\i0}\Ntrên Super Nintendo!
Dialogue: 0,0:21:44.47,0:21:45.37,Default,,0,0,0,,Này!
Dialogue: 0,0:21:45.60,0:21:48.10,Default,,0,0,0,,{\i1}Chết thật, mình quá đà rồi.{\i0}
Dialogue: 0,0:21:49.94,0:21:52.78,Default,,0,0,0,,{\i1}Nhìn mặt chả ai ngờ{\i0}\N{\i1}Hidaka thích hành người khác.{\i0}
Dialogue: 0,0:21:53.05,0:21:53.98,Default,,0,0,0,,Sao lại thế?
Dialogue: 0,0:21:54.08,0:21:57.75,Default,,0,0,0,,Sao thằng ngốc Haruo đó\Nthân thiết với một cô bé xinh đến vậy?
Dialogue: 0,0:21:59.18,0:22:01.68,Default,,0,0,0,,Đúng là Haruo rất ngốc,
Dialogue: 0,0:22:01.75,0:22:04.32,Default,,0,0,0,,nhưng tao nghĩ nó rất có duyên.
Dialogue: 0,0:22:04.89,0:22:08.99,Default,,0,0,0,,Nó không nghe nhạc thời thượng,\Nhay bôi keo cho tóc bóng mượt,
Dialogue: 0,0:22:09.26,0:22:11.26,Default,,0,0,0,,nhưng vẫn thu hút người khác.
Dialogue: 0,0:22:11.36,0:22:15.30,Default,,0,0,0,,Mày… mày so nó với tao đấy hả, Miyao?
Dialogue: 0,0:22:15.47,0:22:17.71,Default,,0,0,0,,Thôi, tập thêm một chút rồi về vậy.
Dialogue: 0,0:22:27.55,0:22:30.45,Default,,0,0,0,,Miyao! Tao cược 50 xèng\Nvới tỉ lệ một ăn 999
Dialogue: 0,0:22:30.52,0:22:32.96,Default,,0,0,0,,và thắng 50.000 xèng rồi!
Dialogue: 0,0:24:10.55,0:24:14.65,Default,,0,0,0,,{\i1}Kawasaki, đô thị cuối thời đại.{\i0}\N{\i1}Là thế giới của bạo lực và chết chóc.{\i0}
Dialogue: 0,0:24:14.75,0:24:17.15,Default,,0,0,0,,{\i1}Du côn sẵn sàng ném gạt tàn ở quán game!{\i0}
Dialogue: 0,0:24:17.26,0:24:19.56,Default,,0,0,0,,{\i1}Miếng kẹo trên sàn cũng bị tranh giành.{\i0}
Dialogue: 0,0:24:19.66,0:24:22.76,Default,,0,0,0,,{\i1}Có bản lĩnh là có cơ hội{\i0}\N{\i1}leo lên vị trí cao nhất!{\i0}
Dialogue: 0,0:24:22.96,0:24:24.96,Default,,0,0,0,,{\i1}Phải, nếu cô ấy cũng ở đây…{\i0}
Dialogue: 0,0:24:25.16,0:24:27.16,Default,,0,0,0,,Biên dịch: Hà Đậu
