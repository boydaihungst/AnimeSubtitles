Dialogue: 0,0:10:50.79,0:10:52.79,Default,,0,0,0,,Haruo! Có chuyện gì vậy, Haruo?
Dialogue: 0,0:10:53.20,0:10:54.37,Default,,0,0,0,,{\i1}Đúng vậy.{\i0}
Dialogue: 0,0:10:54.56,0:10:56.26,Default,,0,0,0,,{\i1}Bỏ cuộc bây giờ là quá sớm.{\i0}
Dialogue: 0,0:11:00.14,0:11:02.98,Default,,0,0,0,,{\i1}Đầu tiên phải lấy lại{\i0}\N{\i1}trình độ chơi máy thùng.{\i0}
Dialogue: 0,0:11:03.14,0:11:05.98,Default,,0,0,0,,{\i1}Phải lấy lại cái gốc{\i0}\N{\i1}và bắt đầu từ số không.{\i0}
Dialogue: 0,0:11:06.64,0:11:08.01,Default,,0,0,0,,{\i1}Sau đó mình sẽ có thể…{\i0}
Dialogue: 0,0:11:09.88,0:11:12.75,Default,,0,0,0,,{\i1}đấu với những người mạnh hơn!{\i0}
Dialogue: 0,0:11:14.42,0:11:20.73,Default,,0,0,0,,CÔ NÀNG BẤT BẠI
Dialogue: 0,0:11:22.09,0:11:26.93,Default,,0,0,0,,{\i1}STREET FIGHTER ALPHA{\i0}
Dialogue: 0,0:11:27.20,0:11:29.20,Default,,0,0,0,,Street Fighter Alpha.
Dialogue: 0,0:11:29.33,0:11:32.17,Default,,0,0,0,,{\i1}Đã ra bốn phần sau phần hai rồi.{\i0}
Dialogue: 0,0:11:32.30,0:11:34.74,Default,,0,0,0,,{\i1}Cứ tưởng tiếp theo sẽ là phần "Ba",{\i0}
Dialogue: 0,0:11:34.84,0:11:36.84,Default,,0,0,0,,{\i1}nhưng họ lại quay về Alpha.{\i0}
Dialogue: 0,0:11:37.54,0:11:41.48,Default,,0,0,0,,{\i1}Cũng đúng lúc mình quyết định{\i0}\N{\i1}bắt đầu lại từ đầu.{\i0}
Dialogue: 0,0:11:41.81,0:11:45.58,Default,,0,0,0,,{\i1}Quả là số phận của mình{\i0}\N{\i1}gắn liền với {\i0}Street Fighter II{\i1} mà.{\i0}
Dialogue: 0,0:11:46.52,0:11:51.56,Default,,0,0,0,,{\i1}Mình quả thật rất hợp{\i0}\N{\i1}với {\i0}Street Fighter II{\i1}… không, với Capcom.{\i0}
Dialogue: 0,0:11:51.95,0:11:53.19,Default,,0,0,0,,{\i1}Đúng không, Guile?{\i0}
Dialogue: 0,0:11:53.42,0:11:55.36,Default,,0,0,0,,{\i1}Tôi không xuất hiện ở {\i0}Alpha{\i1}.{\i0}
Dialogue: 0,0:11:58.89,0:11:59.83,Default,,0,0,0,,{\i1}Nash à?{\i0}
Dialogue: 0,0:12:00.13,0:12:04.50,Default,,0,0,0,,{\i1}Nash là bạn của Guile{\i0}\N{\i1}và có cùng phong cách chiến đấu.{\i0}
Dialogue: 0,0:12:04.70,0:12:07.80,Default,,0,0,0,,{\i1}Nhưng lần này, mình sẽ chọn{\i0}\N{\i1}người có tên giống Guile.{\i0}
Dialogue: 0,0:12:09.94,0:12:13.14,Default,,0,0,0,,{\i1}Con mắt tinh tường lắm.{\i0}\N{\i1}Cậu sẽ là một người lính tốt.{\i0}
Dialogue: 0,0:12:13.24,0:12:15.01,Default,,0,0,0,,{\i1}Haruo, tôi tự hào về cậu quá…{\i0}
Dialogue: 0,0:12:15.71,0:12:17.71,Default,,0,0,0,,{\i1}Không phải đồ họa pixel như {\i0}SF II{\i1}.{\i0}
Dialogue: 0,0:12:17.85,0:12:20.62,Default,,0,0,0,,{\i1}Kiểu anime như {\i0}Darkstalkers{\i1}.{\i0}\N{\i1}Chuyển động mượt.{\i0}
Dialogue: 0,0:12:21.48,0:12:24.42,Default,,0,0,0,,{\i1}Các nhân vật đặc sắc, rất dễ yêu thích.{\i0}
Dialogue: 0,0:12:24.55,0:12:27.42,Default,,0,0,0,,{\i1}Lão trùm ở Alpha đô con hơn hẳn{\i0}\N{\i1}nên rất dễ sợ.{\i0}
