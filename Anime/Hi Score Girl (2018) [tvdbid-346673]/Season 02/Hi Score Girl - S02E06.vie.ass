Dialogue: 0,0:00:16.75,0:00:18.68,Default,,0,0,0,,{\c&Hffffff&\i1}Nắm Đấm Linh Hồn! Gươm bóng tối!{\i0}
Dialogue: 0,0:00:19.75,0:00:21.85,Default,,0,0,0,,{\c&Hffffff&\i1}Mình chơi trò này tệ thật.{\i0}
Dialogue: 0,0:00:22.58,0:00:24.42,Default,,0,0,0,,{\c&Hffffff&\i1}Lâu quá rồi không chơi.{\i0}
Dialogue: 0,0:00:25.09,0:00:27.82,Default,,0,0,0,,{\c&Hffffff&\i1}Đã lâu không chơi đấu tay đôi.{\i0}
Dialogue: 0,0:00:28.99,0:00:30.19,Default,,0,0,0,,{\c&Hffffff&\i1}Ôi trời!{\i0}
Dialogue: 0,0:00:45.11,0:00:48.41,Default,,0,0,0,,{\c&Hffffff&\i1}Cảm giác như gần đây\Nmình chẳng đánh bại được ai.{\i0}
Dialogue: 0,0:00:50.18,0:00:51.78,Default,,0,0,0,,{\c&Hffffff&\i1}Mình cảm thấy thật hoang mang.{\i0}
Dialogue: 0,0:00:55.88,0:00:59.45,Default,,0,0,0,,{\c&Hffffff&}NGUYÊN TÁC CỦA RENSUKE OSHIKIRI
Dialogue: 0,0:02:23.00,0:02:24.91,Default,,0,0,0,,{\c&Hffffff&}VÒNG 21
Dialogue: 0,0:02:24.97,0:02:27.41,Default,,0,0,0,,{\an8\c&Hffffff&\i1}Haruo! Con về rồi sao?{\i0}
Dialogue: 0,0:02:28.51,0:02:30.65,Default,,0,0,0,,{\c&Hffffff&}Con muốn khi nào ăn tối?
Dialogue: 0,0:02:31.18,0:02:33.55,Default,,0,0,0,,{\c&Hffffff&}Con không đói lắm.
Dialogue: 0,0:02:34.25,0:02:35.68,Default,,0,0,0,,{\c&Hffffff&}Lạ thật.
Dialogue: 0,0:02:36.15,0:02:38.75,Default,,0,0,0,,{\c&Hffffff&}Có phải xe máy làm nó bị say xe không nhỉ?
Dialogue: 0,0:02:39.79,0:02:41.29,Default,,0,0,0,,{\c&Hffffff&\i1}Ôi trời, chán nản quá.{\i0}
Dialogue: 0,0:02:41.46,0:02:43.29,Default,,0,0,0,,{\c&Hffffff&\i1}Mình lụt nghề game đối kháng rồi.{\i0}
Dialogue: 0,0:02:43.89,0:02:45.59,Default,,0,0,0,,{\c&Hffffff&\i1}Khi cậu dùng chiêu Hane Yaiba,{\i0}
Dialogue: 0,0:02:45.66,0:02:49.10,Default,,0,0,0,,{\c&Hffffff&\i1}cậu không ra được chiêu Kien Zan\Nsau chiêu Kaeshi Yaiba.{\i0}
Dialogue: 0,0:02:49.16,0:02:50.80,Default,,0,0,0,,{\c&Hffffff&\i1}Đúng thế!{\i0}
Dialogue: 0,0:02:50.87,0:02:53.33,Default,,0,0,0,,{\c&Hffffff&\i1}Không, vấn đề thật sự không phải là nó.{\i0}
Dialogue: 0,0:02:54.87,0:02:57.34,Default,,0,0,0,,{\c&Hffffff&\i1}Có lẽ mình biết nguyên nhân thật sự là gì.{\i0}
Dialogue: 0,0:03:00.58,0:03:04.01,Default,,0,0,0,,{\c&Hffffff&\i1}Sao trông cậu ấy lại tuyệt vọng như thế?{\i0}
Dialogue: 0,0:03:05.25,0:03:07.65,Default,,0,0,0,,{\c&Hffffff&\i1}Vẻ mặt đó, trông cậy ấy như rất đau khổ.{\i0}
Dialogue: 0,0:03:09.32,0:03:11.85,Default,,0,0,0,,{\c&Hffffff&\i1}Mình không bao giờ\Nbiết được cậu ấy nghĩ gì,{\i0}
Dialogue: 0,0:03:12.52,0:03:14.32,Default,,0,0,0,,{\c&Hffffff&\i1}nhưng có lẽ lần này mình hiểu được.{\i0}
Dialogue: 0,0:03:15.09,0:03:16.69,Default,,0,0,0,,{\c&Hffffff&\i1}Đó là sẽ không bao giờ...{\i0}
Dialogue: 0,0:03:17.33,0:03:19.29,Default,,0,0,0,,{\c&Hffffff&\i1}bọn mình được gần nhau như lúc trước nữa.{\i0}
Dialogue: 0,0:03:21.50,0:03:24.83,Default,,0,0,0,,{\c&Hffffff&\i1}Mình không biết cậu ấy quyết định lúc nào.{\i0}
Dialogue: 0,0:03:25.33,0:03:28.77,Default,,0,0,0,,{\c&Hffffff&\i1}Nhưng nét mặt đó cho thấy\Nnhất định đã xảy ra chuyện gì đó.{\i0}
Dialogue: 0,0:03:30.77,0:03:34.61,Default,,0,0,0,,{\c&Hffffff&\i1}Lần cuối gặp nhau\Nlà hôm chơi game cả đêm ở nhà cậu ấy.{\i0}
Dialogue: 0,0:03:35.24,0:03:36.54,Default,,0,0,0,,{\c&Hffffff&\i1}Có chuyện gì xảy ra sao?{\i0}
Dialogue: 0,0:03:37.41,0:03:38.58,Default,,0,0,0,,{\c&Hffffff&\i1}Mọi thứ đều mơ hồ quá.{\i0}
Dialogue: 0,0:03:39.35,0:03:42.15,Default,,0,0,0,,{\c&Hffffff&\i1}Sao mình lại chán nản đến vậy cơ chứ?{\i0}
Dialogue: 0,0:03:42.65,0:03:45.05,Default,,0,0,0,,{\c&Hffffff&\i1}Haruo, phụ nữ là một bí ẩn.{\i0}
Dialogue: 0,0:03:45.59,0:03:47.52,Default,,0,0,0,,{\c&Hffffff&\i1}Chắc chắn giờ cậu đã hiểu.{\i0}
Dialogue: 0,0:03:48.49,0:03:49.49,Default,,0,0,0,,{\c&Hffffff&\i1}Rất đau khổ, nhỉ?{\i0}
Dialogue: 0,0:03:49.96,0:03:51.33,Default,,0,0,0,,{\c&Hffffff&\i1}Rất bất lực, nhỉ?{\i0}
Dialogue: 0,0:03:52.19,0:03:53.36,Default,,0,0,0,,{\c&Hffffff&\i1}Cậu nghĩ lý do là gì?{\i0}
Dialogue: 0,0:03:54.96,0:03:56.63,Default,,0,0,0,,{\c&Hffffff&\i1}Cậu nghĩ lý do là gì, Haruo?{\i0}
Dialogue: 0,0:03:57.40,0:03:59.53,Default,,0,0,0,,{\c&Hffffff&\i1}Điều gì đang khiến cậu đau khổ?{\i0}
Dialogue: 0,0:04:00.20,0:04:01.27,Default,,0,0,0,,{\c&Hffffff&\i1}Mau tìm đáp án đi!{\i0}
Dialogue: 0,0:04:08.58,0:04:10.51,Default,,0,0,0,,{\c&Hffffff&\i1}Khi nghĩ về việc đó,{\i0}
Dialogue: 0,0:04:11.25,0:04:13.48,Default,,0,0,0,,{\c&Hffffff&\i1}cậu ấy từng khiến mình tức giận\Nvà buồn bã.{\i0}
Dialogue: 0,0:04:14.25,0:04:17.19,Default,,0,0,0,,{\c&Hffffff&\i1}Nhớ đến những điều đó thôi\Nđã khiến mình rất khó chịu.{\i0}
Dialogue: 0,0:04:21.76,0:04:22.66,Default,,0,0,0,,{\c&Hffffff&\i1}Từ bao giờ?{\i0}
Dialogue: 0,0:04:23.89,0:04:28.20,Default,,0,0,0,,{\c&Hffffff&\i1}Từ bao giờ cậu ấy trở thành\Nmột phần quan trọng trong cuộc sống mình?{\i0}
Dialogue: 0,0:04:29.50,0:04:30.93,Default,,0,0,0,,{\c&Hffffff&\i1}Từ năm lớp sáu,{\i0}
Dialogue: 0,0:04:31.33,0:04:34.67,Default,,0,0,0,,{\c&Hffffff&\i1}minh không ngừng muốn đấu với cậu ấy.{\i0}
Dialogue: 0,0:04:34.74,0:04:35.87,Default,,0,0,0,,{\c&Hffffff&\i1}Chỉ vậy thôi sao?{\i0}
Dialogue: 0,0:04:36.40,0:04:38.61,Default,,0,0,0,,{\c&Hffffff&\i1}Cậu luôn muốn đấu với cô ấy thôi sao?{\i0}
Dialogue: 0,0:04:47.98,0:04:49.78,Default,,0,0,0,,{\c&Hffffff&\i1}Mỗi lần mình xuống phố,{\i0}
Dialogue: 0,0:04:50.18,0:04:52.92,Default,,0,0,0,,{\c&Hffffff&\i1}kỷ niệm của hai đứa lại ùa về.{\i0}
Dialogue: 0,0:04:54.09,0:04:55.26,Default,,0,0,0,,{\c&Hffffff&\i1}Lúc ấy có vui không?{\i0}
Dialogue: 0,0:04:55.86,0:04:57.46,Default,,0,0,0,,{\c&Hffffff&\i1}Nhất định hai người đã rất vui.{\i0}
Dialogue: 0,0:04:59.06,0:05:00.16,Default,,0,0,0,,{\c&Hffffff&\i1}Phải, rất vui.{\i0}
Dialogue: 0,0:05:01.16,0:05:03.30,Default,,0,0,0,,{\c&Hffffff&\i1}Được ở cạnh Ono là tuyệt nhất.{\i0}
Dialogue: 0,0:05:04.17,0:05:05.10,Default,,0,0,0,,{\c&Hffffff&\i1}Cậu rất hào hứng?{\i0}
Dialogue: 0,0:05:05.90,0:05:07.97,Default,,0,0,0,,{\c&Hffffff&\i1}Trái tim cậu cũng rất hào hứng sao?{\i0}
Dialogue: 0,0:05:09.00,0:05:09.94,Default,,0,0,0,,{\c&Hffffff&\i1}Phải, rất hào hứng.{\i0}
Dialogue: 0,0:05:11.01,0:05:13.68,Default,,0,0,0,,{\c&Hffffff&\i1}Ngoài khát khao chiến đấu,\Ncòn có gì đó bùng cháy.{\i0}
Dialogue: 0,0:05:15.71,0:05:18.81,Default,,0,0,0,,{\c&Hffffff&\i1}Điều gì đang thật sự bùng cháy\Ntrong tim cậu?{\i0}
Dialogue: 0,0:05:24.15,0:05:25.95,Default,,0,0,0,,{\c&Hffffff&\i1}Đối mặt với con tim cậu đi, Haruo.{\i0}
Dialogue: 0,0:05:26.65,0:05:28.69,Default,,0,0,0,,{\c&Hffffff&\i1}Thành thật tự hỏi trái tim mình{\i0}
Dialogue: 0,0:05:28.76,0:05:29.82,Default,,0,0,0,,{\c&Hffffff&\i1}và tìm ra đáp án đi!{\i0}
Dialogue: 0,0:05:37.37,0:05:40.10,Default,,0,0,0,,{\c&Hffffff&}Không ngờ cậu lại đến nhà tớ đấy, Haruo.
Dialogue: 0,0:05:40.57,0:05:43.94,Default,,0,0,0,,{\c&Hffffff&}Rốt cuộc máy game của tớ\N{\c&Hffffff&}cũng có đất dụng võ.
Dialogue: 0,0:05:44.37,0:05:46.01,Default,,0,0,0,,{\c&Hffffff&}Máy này xưa lắm rồi.
Dialogue: 0,0:05:46.74,0:05:48.61,Default,,0,0,0,,{\c&Hffffff&}Và cậu chỉ có mỗi trò bóng né.
Dialogue: 0,0:05:49.08,0:05:51.18,Default,,0,0,0,,{\c&Hffffff&}Tớ mua để chơi với cậu đấy.
Dialogue: 0,0:05:52.41,0:05:54.22,Default,,0,0,0,,{\c&Hffffff&}Cậu chơi trò này dở tệ.
Dialogue: 0,0:05:54.28,0:05:56.82,Default,,0,0,0,,{\c&Hffffff&}Là vì cậu chơi đội Liên Xô đấy, Miyao.
Dialogue: 0,0:05:57.32,0:05:58.59,Default,,0,0,0,,{\c&Hffffff&}Còn tớ là đội Hanazono.
Dialogue: 0,0:05:58.89,0:06:01.49,Default,,0,0,0,,{\c&Hffffff&}Cậu biết đấy, trò này khiến tớ rất vui.
Dialogue: 0,0:06:01.56,0:06:04.43,Default,,0,0,0,,{\c&Hffffff&}Không ngờ tớ là người đầu tiên\N{\c&Hffffff&}cậu khoe chiếc xe.
Dialogue: 0,0:06:06.09,0:06:10.90,Default,,0,0,0,,{\c&Hffffff&}Ý tớ không phải vậy.\N{\c&Hffffff&}Đương nhiên cậu đã khoe với Ono trước.
Dialogue: 0,0:06:12.70,0:06:14.40,Default,,0,0,0,,{\c&Hffffff&}Mà có chuyện gì sao?
Dialogue: 0,0:06:14.74,0:06:17.21,Default,,0,0,0,,{\c&Hffffff&}Không có gì chuyện cả.\N{\c&Hffffff&}Cậu ấy tỏ ra khá lạnh lùng.
Dialogue: 0,0:06:17.54,0:06:20.44,Default,,0,0,0,,{\c&Hffffff&}Vậy sao? Nhất định đã xảy ra chuyện gì đó.
Dialogue: 0,0:06:22.74,0:06:25.18,Default,,0,0,0,,{\c&Hffffff&}Tớ cá rằng hai cậu sẽ lại phải xa nhau.
Dialogue: 0,0:06:26.08,0:06:28.05,Default,,0,0,0,,{\c&Hffffff&}Cậu chẳng bao giờ cố thay đổi điều đó cả.
Dialogue: 0,0:06:28.12,0:06:30.79,Default,,0,0,0,,{\c&Hffffff&}Tớ chẳng hiểu nổi mối quan hệ của hai cậu.
Dialogue: 0,0:06:31.72,0:06:34.49,Default,,0,0,0,,{\c&Hffffff&}Thật khó chịu\N{\c&Hffffff&}khi thấy cậu bị tình cảm đánh bại.
Dialogue: 0,0:06:38.06,0:06:40.23,Default,,0,0,0,,{\c&Hffffff&}Tớ không muốn xa cậu ấy lần nữa.
Dialogue: 0,0:06:42.23,0:06:45.43,Default,,0,0,0,,{\c&Hffffff&}Tớ biết rằng\N{\c&Hffffff&}bản thân đã bị cảm xúc đánh bại.
Dialogue: 0,0:06:46.63,0:06:48.70,Default,,0,0,0,,{\c&Hffffff&}Tớ đã luôn cố làm ngơ điều đó.
Dialogue: 0,0:06:49.40,0:06:50.94,Default,,0,0,0,,{\c&Hffffff&}Tớ không biết làm sao cả.
Dialogue: 0,0:06:51.64,0:06:53.17,Default,,0,0,0,,{\c&Hffffff&}Về điều gì?
Dialogue: 0,0:06:54.54,0:06:56.14,Default,,0,0,0,,{\c&Hffffff&}Ý tớ là Ono.
Dialogue: 0,0:06:56.61,0:07:02.25,Default,,0,0,0,,{\c&Hffffff&}Ồ, cuối cùng cậu cũng thừa nhận, Haruo!
Dialogue: 0,0:07:02.98,0:07:04.59,Default,,0,0,0,,{\c&Hffffff&}Miyao, những điều cậu nói
Dialogue: 0,0:07:05.25,0:07:06.75,Default,,0,0,0,,{\c&Hffffff&}đều chính xác cả.
Dialogue: 0,0:07:07.22,0:07:09.62,Default,,0,0,0,,{\c&Hffffff&}Tớ...đã nói gì vậy?
Dialogue: 0,0:07:10.26,0:07:13.53,Default,,0,0,0,,{\c&Hffffff&}Tớ đã giấu cậu rất nhiều thứ\N{\c&Hffffff&}và lảng tránh câu hỏi của cậu.
Dialogue: 0,0:07:14.73,0:07:17.77,Default,,0,0,0,,{\c&Hffffff&}Nói thật thì tớ đã rất sốc\N{\c&Hffffff&}với cảm xúc thật của tớ.
Dialogue: 0,0:07:18.27,0:07:20.00,Default,,0,0,0,,{\c&Hffffff&}- Cậu...\N{\c&Hffffff&}- Nhìn thời gian kìa.
Dialogue: 0,0:07:20.07,0:07:23.77,Default,,0,0,0,,{\c&Hffffff&}- Tớ phải đi rồi.\N{\c&Hffffff&}- Chờ đã!
Dialogue: 0,0:07:24.47,0:07:27.64,Default,,0,0,0,,{\c&Hffffff&}Đầu óc cậu quá đơn giản,\N{\c&Hffffff&}bảo sao cậu không biết làm thế nào.
Dialogue: 0,0:07:27.71,0:07:29.94,Default,,0,0,0,,{\c&Hffffff&}Cậu chẳng biết tình yêu\N{\c&Hffffff&}hay lãng mạn gì cả!
Dialogue: 0,0:07:30.01,0:07:32.68,Default,,0,0,0,,{\c&Hffffff&}Tình yêu là thật! Lãng mạn là ích kỷ!
Dialogue: 0,0:07:32.95,0:07:36.02,Default,,0,0,0,,{\c&Hffffff&}Nói cho cùng,\N{\c&Hffffff&}cậu không ích kỷ chút nào, Haruo!
Dialogue: 0,0:07:36.58,0:07:38.85,Default,,0,0,0,,{\c&Hffffff&\i1}Đối với cậu, không có "thích".{\i0}
Dialogue: 0,0:07:38.92,0:07:40.09,Default,,0,0,0,,{\c&Hffffff&\i1}Chỉ có "yêu" thôi!{\i0}
Dialogue: 0,0:07:40.15,0:07:41.99,Default,,0,0,0,,{\an8\c&Hffffff&}THÍCH\N{\c&Hffffff&}YÊU
Dialogue: 0,0:07:42.66,0:07:47.66,Default,,0,0,0,,{\c&Hffffff&}Bỏ qua lãng mạn, tiến thẳng đến tình yêu!\N{\c&Hffffff&}Thảo nào cậu không biết làm sao cả!
Dialogue: 0,0:07:47.73,0:07:49.43,Default,,0,0,0,,{\c&Hffffff&}Haruo!
Dialogue: 0,0:07:50.16,0:07:52.37,Default,,0,0,0,,{\c&Hffffff&}Rốt cuộc cậu cũng đối mặt\N{\c&Hffffff&}với tình cảm thật sự!
Dialogue: 0,0:07:52.43,0:07:54.57,Default,,0,0,0,,{\c&Hffffff&}Miyao, cậu nhiệt tình quá rồi đấy.
Dialogue: 0,0:07:56.30,0:07:58.21,Default,,0,0,0,,{\c&Hffffff&}Bỏ qua lãng mạn thẳng đến tình yêu gì đó
Dialogue: 0,0:07:58.94,0:08:01.08,Default,,0,0,0,,{\c&Hffffff&}không có ý nghĩa gì với tớ cả.
Dialogue: 0,0:08:02.08,0:08:05.25,Default,,0,0,0,,{\c&Hffffff&}Tớ đơn giản chỉ là một chàng trai...
Dialogue: 0,0:08:07.98,0:08:09.25,Default,,0,0,0,,{\c&Hffffff&}có tình cảm...
Dialogue: 0,0:08:10.18,0:08:11.45,Default,,0,0,0,,{\c&Hffffff&}với Ono thôi.
Dialogue: 0,0:08:15.36,0:08:17.26,Default,,0,0,0,,{\c&Hffffff&\i1}Cuối cùng Haruo cũng nói ra lòng mình.{\i0}
Dialogue: 0,0:08:17.33,0:08:21.00,Default,,0,0,0,,{\c&Hffffff&}Ra vậy. Cậu ấy "nói ra lòng mình"\N{\c&Hffffff&}nghĩa là thừa nhận tình cảm của cậu ấy.
Dialogue: 0,0:08:22.16,0:08:24.37,Default,,0,0,0,,{\c&Hffffff&}Haruo đã che giấu gì đó sao?
Dialogue: 0,0:08:24.43,0:08:27.24,Default,,0,0,0,,{\c&Hffffff&}Phải, những cảm xúc rối loạn\N{\c&Hffffff&}trong tim cậu ấy.
Dialogue: 0,0:08:28.20,0:08:32.01,Default,,0,0,0,,{\c&Hffffff&}Cậu ấy đã nhận ra và hiểu được chúng.
Dialogue: 0,0:08:32.51,0:08:34.71,Default,,0,0,0,,{\c&Hffffff&}Vậy cảm xúc trong tim cậu ấy là gì?
Dialogue: 0,0:08:35.94,0:08:37.14,Default,,0,0,0,,{\c&Hffffff&}Yêu!
Dialogue: 0,0:08:37.75,0:08:38.65,Default,,0,0,0,,{\c&Hffffff&}Yêu!
Dialogue: 0,0:08:39.78,0:08:40.62,Default,,0,0,0,,{\c&Hffffff&}Yêu!
Dialogue: 0,0:08:41.48,0:08:42.58,Default,,0,0,0,,{\c&Hffffff&}Yêu?
Dialogue: 0,0:08:44.19,0:08:45.02,Default,,0,0,0,,{\c&Hffffff&}YÊU
Dialogue: 0,0:08:45.09,0:08:45.95,Default,,0,0,0,,{\c&Hffffff&\i1}- Yêu!\N- Yêu!{\i0}
Dialogue: 0,0:08:46.02,0:08:46.92,Default,,0,0,0,,{\c&Hffffff&}Thôi đi!
Dialogue: 0,0:08:47.52,0:08:50.09,Default,,0,0,0,,{\c&Hffffff&}Ai cho mọi người ngồi ở phòng tôi\N{\c&Hffffff&}mà cười nhạo tôi hả?
Dialogue: 0,0:08:50.56,0:08:56.50,Default,,0,0,0,,{\c&Hffffff&}Haruo, bọn tớ đang cổ vũ cậu,\N{\c&Hffffff&}nhưng đồng thời cũng lo cho cậu.
Dialogue: 0,0:08:57.03,0:08:59.20,Default,,0,0,0,,{\c&Hffffff&}Dù sao thì tôi cũng thấy rất vui.
Dialogue: 0,0:08:59.53,0:09:01.17,Default,,0,0,0,,{\c&Hffffff&}Em cũng vậy, 30 phần trăm.
Dialogue: 0,0:09:01.24,0:09:04.71,Default,,0,0,0,,{\c&Hffffff&}Này! Tớ là gì chứ?\N{\c&Hffffff&}Đồ chơi của các cậu sao?
Dialogue: 0,0:09:04.77,0:09:08.78,Default,,0,0,0,,{\c&Hffffff&}Vậy người đó là ai?\N{\c&Hffffff&}Đó mới là điều quan trọng.
Dialogue: 0,0:09:11.51,0:09:13.05,Default,,0,0,0,,{\c&Hffffff&}Haruo, tớ được nói không?
Dialogue: 0,0:09:13.11,0:09:14.88,Default,,0,0,0,,{\c&Hffffff&}Ừ...Cậu muốn nói thì nói.
Dialogue: 0,0:09:16.32,0:09:18.82,Default,,0,0,0,,{\c&Hffffff&}Đó là em gái chị đấy.
Dialogue: 0,0:09:19.39,0:09:21.59,Default,,0,0,0,,{\c&Hffffff&}Cậu...nói thật sao?
Dialogue: 0,0:09:21.96,0:09:24.73,Default,,0,0,0,,{\c&Hffffff&}Tôi chẳng nhận ra chút nào cả!
Dialogue: 0,0:09:24.79,0:09:27.09,Default,,0,0,0,,{\c&Hffffff&}Thật sao? Haruo yêu con bé sao?
Dialogue: 0,0:09:27.66,0:09:30.03,Default,,0,0,0,,{\c&Hffffff&}Đúng vậy không?
Dialogue: 0,0:09:30.10,0:09:35.30,Default,,0,0,0,,{\c&Hffffff&}Cậu có tình cảm đặc biệt\N{\c&Hffffff&}với em gái bé bỏng Akia của tôi sao?
Dialogue: 0,0:09:36.77,0:09:38.44,Default,,0,0,0,,{\c&Hffffff&}Tuyệt quá bác Yaguchi nhỉ?
Dialogue: 0,0:09:38.51,0:09:40.54,Default,,0,0,0,,{\c&Hffffff&}Ừ! Bác đã đợi lâu lắm rồi!
Dialogue: 0,0:09:40.61,0:09:42.51,Default,,0,0,0,,{\c&Hffffff&}Vâng, hai ta đợi lâu lắm rồi!
Dialogue: 0,0:09:43.04,0:09:46.61,Default,,0,0,0,,{\c&Hffffff&}Bác luôn cho rằng Haruo bị thiếu đi
Dialogue: 0,0:09:46.95,0:09:49.42,Default,,0,0,0,,{\c&Hffffff&}phần cảm xúc ấy\N{\c&Hffffff&}của một cậu trai thiếu niên.
Dialogue: 0,0:09:49.88,0:09:54.72,Default,,0,0,0,,{\c&Hffffff&}Nhất định Haruo đã nhảy cóc bước lãng mạn\N{\c&Hffffff&}và tiến thẳng đến tình yêu.
Dialogue: 0,0:09:55.59,0:09:56.42,Default,,0,0,0,,{\c&Hffffff&}Lợi hại quá.
Dialogue: 0,0:09:56.99,0:10:00.73,Default,,0,0,0,,{\c&Hffffff&}Lúc học tiểu học, tớ cho rằng\N{\c&Hffffff&}Haruo thua tớ rất xa.
Dialogue: 0,0:10:01.26,0:10:04.33,Default,,0,0,0,,{\c&Hffffff&}Ai mà ngờ được\N{\c&Hffffff&}cậu ấy lại có mối quan hệ đó với Ono?
Dialogue: 0,0:10:05.33,0:10:07.03,Default,,0,0,0,,{\c&Hffffff&}Cậu ấy cùng trường cấp ba với tớ...
Dialogue: 0,0:10:07.97,0:10:09.37,Default,,0,0,0,,{\c&Hffffff&}làm việc bán thời gian...
Dialogue: 0,0:10:10.14,0:10:11.71,Default,,0,0,0,,{\c&Hffffff&}có cả bằng lái xe máy...
Dialogue: 0,0:10:12.31,0:10:15.91,Default,,0,0,0,,{\c&Hffffff&}Còn tớ chỉ có 2.000 yên tiêu vặt\N{\c&Hffffff&}mẹ cho mỗi tháng.
Dialogue: 0,0:10:16.31,0:10:18.75,Default,,0,0,0,,{\c&Hffffff&}- Tớ kém cỏi quá!\N{\c&Hffffff&}- Ôi trời, bình tĩnh đi.
Dialogue: 0,0:10:18.81,0:10:21.38,Default,,0,0,0,,{\c&Hffffff&}Mà này, giờ cậu định làm gì?
Dialogue: 0,0:10:22.12,0:10:24.75,Default,,0,0,0,,{\c&Hffffff&}Đã nhận ra tình cảm của mình\N{\c&Hffffff&}thì không thể quay lại nữa.
Dialogue: 0,0:10:25.22,0:10:28.82,Default,,0,0,0,,{\c&Hffffff&}Đừng nói với tôi là\N{\c&Hffffff&}cậu không tính làm gì cả nhé.
Dialogue: 0,0:10:29.56,0:10:34.80,Default,,0,0,0,,{\c&Hffffff&}Là đàn ông, là phái mạnh,\N{\c&Hffffff&}cậu tính xử lý tình cảm mình thế nào chưa?
Dialogue: 0,0:10:35.46,0:10:38.03,Default,,0,0,0,,{\c&Hffffff&\i1}Đúng vậy. Cậu có thể bắt lấy\Ntình yêu của cậu chứ?{\i0}
Dialogue: 0,0:10:38.80,0:10:40.00,Default,,0,0,0,,{\c&Hffffff&\i1}Tôi đã làm được.{\i0}
Dialogue: 0,0:10:40.47,0:10:42.10,Default,,0,0,0,,{\c&Hffffff&\i1}Nên tôi mới có được gia đình này.{\i0}
Dialogue: 0,0:10:42.64,0:10:45.17,Default,,0,0,0,,{\c&Hffffff&\i1}Anh ta cũng vậy. Cả anh ta nữa.{\i0}
Dialogue: 0,0:10:46.87,0:10:49.08,Default,,0,0,0,,{\c&Hffffff&\i1}Haruo, cậu trưởng thành rồi.{\i0}
Dialogue: 0,0:10:49.91,0:10:51.11,Default,,0,0,0,,{\c&Hffffff&\i1}Từ bản II đến Champion.{\i0}
Dialogue: 0,0:10:51.98,0:10:53.15,Default,,0,0,0,,{\c&Hffffff&\i1}Từ Champion đến Turbo.{\i0}
Dialogue: 0,0:10:53.98,0:10:55.52,Default,,0,0,0,,{\c&Hffffff&\i1}Từ bản Turbo đến bản Super!{\i0}
Dialogue: 0,0:10:56.32,0:10:58.69,Default,,0,0,0,,{\c&Hffffff&\i1}Giờ cậu biết mình đã trưởng thành,{\i0}
Dialogue: 0,0:10:59.09,0:11:02.06,Default,,0,0,0,,{\c&Hffffff&\i1}cậu đã tiến hóa\Nthành Super Haruo II Turbo!{\i0}
Dialogue: 0,0:11:02.39,0:11:03.89,Default,,0,0,0,,{\c&Hffffff&\i1}Chẳng có ý nghĩa gì cả!{\i0}
Dialogue: 0,0:11:04.39,0:11:06.13,Default,,0,0,0,,{\c&Hffffff&\i1}Hãy nắm lấy tình yêu của cậu đi!{\i0}
Dialogue: 0,0:11:06.19,0:11:07.96,Default,,0,0,0,,{\c&Hffffff&}Hãy nắm lấy tình yêu của cậu đi!
Dialogue: 0,0:11:08.36,0:11:09.63,Default,,0,0,0,,{\c&Hffffff&}Nhưng mà...
Dialogue: 0,0:11:10.26,0:11:12.27,Default,,0,0,0,,{\c&Hffffff&}Em không biết làm thế nào cả.
Dialogue: 0,0:11:12.33,0:11:14.67,Default,,0,0,0,,{\c&Hffffff&}Cậu còn do dự gì vậy, Haruo?
Dialogue: 0,0:11:14.74,0:11:16.94,Default,,0,0,0,,{\c&Hffffff&}Không còn thời gian để chần chừ nữa!
Dialogue: 0,0:11:17.00,0:11:19.61,Default,,0,0,0,,{\c&Hffffff&}Nếu cậu cho Ono biết\N{\c&Hffffff&}tình cảm thật của cậu,
Dialogue: 0,0:11:19.94,0:11:22.51,Default,,0,0,0,,{\c&Hffffff&}nhất định cậu ấy sẽ rất vui.
Dialogue: 0,0:11:23.14,0:11:26.85,Default,,0,0,0,,{\c&Hffffff&}Đúng thế! Mau rủ con bé\N{\c&Hffffff&}đi hẹn hò xem phim đi!
Dialogue: 0,0:11:26.91,0:11:32.22,Default,,0,0,0,,{\c&Hffffff&}Phim {\c&Hffffff&\i1}Tham Vọng{\i0\c&Hffffff&} của Nicole Kidman,\N{\c&Hffffff&}vợ của Tom Cruise, sắp chiếu rồi đấy!
Dialogue: 0,0:11:32.29,0:11:34.59,Default,,0,0,0,,{\c&Hffffff&}Phim gì vậy bác? Nghe hấp dẫn quá!
Dialogue: 0,0:11:34.69,0:11:36.22,Default,,0,0,0,,{\c&Hffffff&\i1}Hai bà cô này phiền thật.{\i0}
Dialogue: 0,0:11:37.12,0:11:39.13,Default,,0,0,0,,{\c&Hffffff&}Cậu chưa từng nghĩ đến việc đó sao?
Dialogue: 0,0:11:39.86,0:11:41.36,Default,,0,0,0,,{\c&Hffffff&}Chẳng hạn, giờ cậu sẽ làm gì.
Dialogue: 0,0:11:42.06,0:11:44.47,Default,,0,0,0,,{\c&Hffffff&}Không phải tớ chưa từng nghĩ đến.
Dialogue: 0,0:11:45.33,0:11:47.77,Default,,0,0,0,,{\c&Hffffff&}Có vẻ Ono cũng mang gánh nặng gì đó.
Dialogue: 0,0:11:48.37,0:11:50.30,Default,,0,0,0,,{\c&Hffffff&}Tớ biết mình phải làm gì đó,
Dialogue: 0,0:11:50.87,0:11:52.97,Default,,0,0,0,,{\c&Hffffff&}nhưng lại không biết làm gì mới đúng.
Dialogue: 0,0:11:54.01,0:11:56.88,Default,,0,0,0,,{\c&Hffffff&}Sự hèn nhát của tớ khiến tớ rất khó chịu.
Dialogue: 0,0:11:57.45,0:12:00.48,Default,,0,0,0,,{\c&Hffffff&}Tớ đau đớn nhận ra\N{\c&Hffffff&}bản thân yếu đuối cỡ nào.
Dialogue: 0,0:12:01.05,0:12:02.35,Default,,0,0,0,,{\c&Hffffff&\i1}- Là tình yêu!\N- Là tình yêu!{\i0}
Dialogue: 0,0:12:02.42,0:12:05.69,Default,,0,0,0,,{\c&Hffffff&\i1}- Haruo thật sự yêu rồi!\N- Haruo thật sự yêu rồi!{\i0}
Dialogue: 0,0:12:06.59,0:12:10.19,Default,,0,0,0,,{\c&Hffffff&}Còn nữa, cuộc chiến giữa Ono và tớ\N{\c&Hffffff&}vẫn chưa ngã ngũ.
Dialogue: 0,0:12:11.03,0:12:12.79,Default,,0,0,0,,{\c&Hffffff&}Vẫn chưa tìm ra ai giỏi hơn.
Dialogue: 0,0:12:13.59,0:12:15.56,Default,,0,0,0,,{\c&Hffffff&}Lúc này tớ không vui chút nào.
Dialogue: 0,0:12:16.06,0:12:19.03,Default,,0,0,0,,{\c&Hffffff&}Cuộc chiến? Ý cậu là trò chơi điện tử sao?
Dialogue: 0,0:12:19.47,0:12:21.50,Default,,0,0,0,,{\c&Hffffff&}Cậu còn nghĩ đến cái đó sao?
Dialogue: 0,0:12:21.57,0:12:23.87,Default,,0,0,0,,{\c&Hffffff&}Không, như thế mới là Haruo.\N{\c&Hffffff&}Cậu ấy là thế đấy.
Dialogue: 0,0:12:24.71,0:12:26.54,Default,,0,0,0,,{\c&Hffffff&}Thay vì chú tâm đến tình yêu,
Dialogue: 0,0:12:27.21,0:12:30.48,Default,,0,0,0,,{\c&Hffffff&}đối với cậu ấy,\N{\c&Hffffff&}Ono giống như một đối thủ hơn.
Dialogue: 0,0:12:31.35,0:12:34.95,Default,,0,0,0,,{\c&Hffffff&}Đánh bại Ono trong game trước\N{\c&Hffffff&}mới có thể củng cố niềm tin của cậu.
Dialogue: 0,0:12:35.45,0:12:39.82,Default,,0,0,0,,{\c&Hffffff&}Vậy là giờ trở thành\N{\c&Hffffff&}trận đấu game hay gì đó rồi sao?
Dialogue: 0,0:12:39.89,0:12:42.12,Default,,0,0,0,,{\c&Hffffff&}Cái đó nằm ngoài chuyên môn bọn bác rồi.
Dialogue: 0,0:12:42.79,0:12:44.43,Default,,0,0,0,,{\c&Hffffff&}- Không vui!\N{\c&Hffffff&}- Không vui!
Dialogue: 0,0:12:45.16,0:12:48.33,Default,,0,0,0,,{\c&Hffffff&}Ở đây không cần bác cháu mình nữa,\N{\c&Hffffff&}xuống nhà uống trà thôi.
Dialogue: 0,0:12:50.87,0:12:52.10,Default,,0,0,0,,{\c&Hffffff&\i1}Như vậy cũng hợp lý.{\i0}
Dialogue: 0,0:12:52.73,0:12:56.97,Default,,0,0,0,,{\c&Hffffff&\i1}Giữa Haruo và Ono\Ncó sự kết nối rất sâu sắc.{\i0}
Dialogue: 0,0:12:58.04,0:13:00.24,Default,,0,0,0,,{\c&Hffffff&\i1}Không ai có thể đến gần sự kết nối này cả,{\i0}
Dialogue: 0,0:13:01.21,0:13:05.45,Default,,0,0,0,,{\c&Hffffff&\i1}vậy nên thúc giục cậu ấy tỏ tình với Ono\Ncũng không hẳn là ý hay.{\i0}
Dialogue: 0,0:13:05.51,0:13:08.75,Default,,0,0,0,,{\c&Hffffff&}Vậy thì mau giải quyết\N{\c&Hffffff&}cuộc chiến game này đi!
Dialogue: 0,0:13:08.82,0:13:10.75,Default,,0,0,0,,{\c&Hffffff&}Đừng rối rắm về chuyện này nữa.
Dialogue: 0,0:13:11.05,0:13:15.32,Default,,0,0,0,,{\c&Hffffff&}Vậy có thể đấu nhau\N{\c&Hffffff&}bằng trò {\c&Hffffff&\i1}Street Fighter II{\i0\c&Hffffff&}, đúng không?
Dialogue: 0,0:13:15.79,0:13:16.92,Default,,0,0,0,,{\c&Hffffff&}Ừ, chắc là vậy.
Dialogue: 0,0:13:17.39,0:13:19.03,Default,,0,0,0,,{\c&Hffffff&}Vậy cách này có được không?
Dialogue: 0,0:13:19.09,0:13:23.96,Default,,0,0,0,,{\c&Hffffff&}Giải vô địch toàn quốc\N{\c&Hffffff&\i1}Super Street Fighter II Turbo{\i0\c&Hffffff&} năm 1996.
Dialogue: 0,0:13:24.50,0:13:27.37,Default,,0,0,0,,{\an8\c&Hffffff&}Cậu sẽ cùng tham gia với Ono\N{\c&Hffffff&}và giành lấy giải.
Dialogue: 0,0:13:27.97,0:13:30.37,Default,,0,0,0,,{\c&Hffffff&}Cậu sẽ thắng và tỏ tình với cậu ấy.
Dialogue: 0,0:13:30.94,0:13:33.97,Default,,0,0,0,,{\c&Hffffff&}Cách này thỏa mãn cậu rồi chứ, Haruo?
Dialogue: 0,0:13:34.04,0:13:36.41,Default,,0,0,0,,{\c&Hffffff&}- Tổ chức ở đâu vậy?\N{\c&Hffffff&}- Ở Osaka.
Dialogue: 0,0:13:36.48,0:13:37.58,Default,,0,0,0,,{\c&Hffffff&}- Osaka sao?\N{\c&Hffffff&}- Osaka sao?
Dialogue: 0,0:13:37.65,0:13:40.08,Default,,0,0,0,,{\c&Hffffff&}- Chỉ hai đứa nó?\N{\c&Hffffff&}- Đi đến tận Osaka sao?
Dialogue: 0,0:13:42.95,0:13:46.62,Default,,0,0,0,,{\c&Hffffff&}Này, mèo vuốt sáp, ý kiến đó khá hay đấy.
Dialogue: 0,0:13:46.69,0:13:48.52,Default,,0,0,0,,{\c&Hffffff&}Đừng gọi tớ là "mèo vuốt sáp".
Dialogue: 0,0:13:49.59,0:13:51.56,Default,,0,0,0,,{\c&Hffffff&\i1}Một cuộc thi ở Osaka...{\i0}
Dialogue: 0,0:13:52.69,0:13:55.80,Default,,0,0,0,,{\c&Hffffff&\i1}Lần trước,\Nmình thắng vì nút của cậu ấy bị hư.{\i0}
Dialogue: 0,0:13:57.33,0:13:59.50,Default,,0,0,0,,{\c&Hffffff&\i1}Lần đó không giải quyết được gì cả.{\i0}
Dialogue: 0,0:14:00.87,0:14:03.97,Default,,0,0,0,,{\c&Hffffff&\i1}Nếu cậu ấy đồng ý,{\i0}
Dialogue: 0,0:14:05.01,0:14:07.61,Default,,0,0,0,,{\c&Hffffff&\i1}mình muốn dùng trận tái đấu này\Nđể giải quyết nó.{\i0}
Dialogue: 0,0:14:08.84,0:14:11.95,Default,,0,0,0,,{\c&Hffffff&\i1}Và nếu mình thắng...{\i0}
Dialogue: 0,0:14:12.08,0:14:14.42,Default,,0,0,0,,{\c&Hffffff&}"Akira, ta làm chuyện ấy đi".
Dialogue: 0,0:14:17.15,0:14:20.19,Default,,0,0,0,,{\c&Hffffff&}Mà này, Haruo,\N{\c&Hffffff&}bọn tớ biết mình ép cậu hơi quá,
Dialogue: 0,0:14:20.25,0:14:22.49,Default,,0,0,0,,{\c&Hffffff&}nhưng thật lòng bọn tớ đều ủng hộ cậu.
Dialogue: 0,0:14:24.99,0:14:25.96,Default,,0,0,0,,{\c&Hffffff&}Ừ.
Dialogue: 0,0:14:26.46,0:14:30.63,Default,,0,0,0,,{\c&Hffffff&}"Ừ". Rồi mặt cậu ấy\N{\c&Hffffff&}trở nên nghiêm túc như thế đấy.
Dialogue: 0,0:14:30.70,0:14:32.47,Default,,0,0,0,,{\c&Hffffff&}Rất nghiêm túc và "tha thiết".
Dialogue: 0,0:14:33.17,0:14:34.74,Default,,0,0,0,,{\c&Hffffff&}Cậu ấy rất tha thiết!
Dialogue: 0,0:14:34.80,0:14:37.07,Default,,0,0,0,,{\c&Hffffff&}Tiểu thư phải ra khỏi thành phố sao?
Dialogue: 0,0:14:37.14,0:14:40.57,Default,,0,0,0,,{\c&Hffffff&}Tôi không nghĩ cô Moemi sẽ đồng ý đâu.
Dialogue: 0,0:14:40.64,0:14:44.31,Default,,0,0,0,,{\c&Hffffff&}Em sẽ làm gì đây, Akira?\N{\c&Hffffff&}Cậu ấy hoàn toàn nghiêm túc đấy.
Dialogue: 0,0:14:44.38,0:14:46.91,Default,,0,0,0,,{\c&Hffffff&}Cậu ấy muốn\N{\c&Hffffff&}giải quyết dứt điểm mọi chuyện.
Dialogue: 0,0:14:47.11,0:14:48.12,Default,,0,0,0,,{\c&Hffffff&}Tôi thừa nhận
Dialogue: 0,0:14:48.18,0:14:52.55,Default,,0,0,0,,{\c&Hffffff&}đúng là giữa hai cô cậu\N{\c&Hffffff&}có sự ràng buộc của định mệnh.
Dialogue: 0,0:14:53.15,0:14:56.66,Default,,0,0,0,,{\c&Hffffff&}Giờ trong tim cậu ấy, điều gì đã thay đổi?
