Dialogue: 0,0:15:56.68,0:16:00.75,Default,,0,0,0,,{\c&Hffffff&\i1}Đáng lý nên đem theo\Nmáy Game Gear hoặc Game Boy.{\i0}
Dialogue: 0,0:16:01.66,0:16:03.36,Default,,0,0,0,,{\c&Hffffff&\i1}Ngày mai là thi đấu rồi.{\i0}
Dialogue: 0,0:16:03.96,0:16:07.53,Default,,0,0,0,,{\c&Hffffff&\i1}Giải vô địch quốc gia{\i0}\N{\c&Hffffff&}Super Street Fighter II Turbo.
Dialogue: 0,0:16:08.06,0:16:09.40,Default,,0,0,0,,{\c&Hffffff&\i1}Có chắc là mình sẽ ổn chứ?{\i0}
Dialogue: 0,0:16:09.46,0:16:12.37,Default,,0,0,0,,{\c&Hffffff&\i1}Mai là thi đấu\Nmà mình chưa luyện tập chút nào.{\i0}
Dialogue: 0,0:16:13.33,0:16:16.90,Default,,0,0,0,,{\c&Hffffff&\i1}Không chừng chưa gặp được Ono\Nthì mình thua mất rồi.{\i0}
Dialogue: 0,0:16:18.04,0:16:21.38,Default,,0,0,0,,{\c&Hffffff&\i1}Mình cho rằng bọn mình sẽ\Ngiải quyết việc này bằng trận chung kết.{\i0}
Dialogue: 0,0:16:22.61,0:16:26.81,Default,,0,0,0,,{\c&Hffffff&\i1}Nếu mình thua từ vòng đầu,\Nnghĩa là mình thua cậu ấy sao?{\i0}
Dialogue: 0,0:16:28.35,0:16:31.22,Default,,0,0,0,,{\c&Hffffff&\i1}Có khả năng\NOno cũng sẽ thua từ vòng đầu mà.{\i0}
Dialogue: 0,0:16:31.69,0:16:34.22,Default,,0,0,0,,{\c&Hffffff&\i1}Nếu như vậy thì chẳng thỏa mãn chút nào.{\i0}
Dialogue: 0,0:16:34.56,0:16:38.03,Default,,0,0,0,,{\c&Hffffff&\i1}Mình chỉ muốn giải quyết việc này\Ntrong một cuộc thi lớn.{\i0}
Dialogue: 0,0:16:38.46,0:16:42.40,Default,,0,0,0,,{\c&Hffffff&\i1}Nhưng nó chỉ làm giảm khả năng\Nđược đánh bại Ono.{\i0}
Dialogue: 0,0:16:42.93,0:16:46.57,Default,,0,0,0,,{\c&Hffffff&\i1}Đáng lẽ hai đứa chỉ nên\Nđấu một trận với nhau ở Mizonokuchi.{\i0}
Dialogue: 0,0:16:47.94,0:16:52.54,Default,,0,0,0,,{\c&Hffffff&\i1}Không! Việc này phải giải quyết\Nở một cuộc thi lớn thế này mới hợp!{\i0}
Dialogue: 0,0:16:53.71,0:16:56.14,Default,,0,0,0,,{\c&Hffffff&\i1}Nơi dành cho trận quyết đấu\Nsau từng ấy năm!{\i0}
Dialogue: 0,0:16:59.61,0:17:01.68,Default,,0,0,0,,{\c&Hffffff&\i1}Cậu ấy vẫn chưa ngủ sao?{\i0}
Dialogue: 0,0:17:02.45,0:17:06.39,Default,,0,0,0,,{\c&Hffffff&\i1}Đi chơi và ăn uống cả ngày,\Nmình tưởng cậu ấy kiệt sức rồi chứ.{\i0}
Dialogue: 0,0:17:08.36,0:17:10.26,Default,,0,0,0,,{\c&Hffffff&\i1}Mình nghe được mọi thứ bên phòng cậu ấy!{\i0}
Dialogue: 0,0:17:10.69,0:17:13.63,Default,,0,0,0,,{\c&Hffffff&\i1}Tường ở đây nhất định mỏng như giấy.{\i0}
Dialogue: 0,0:17:15.13,0:17:17.46,Default,,0,0,0,,{\c&Hffffff&\i1}Hả? Cậu ấy đang ăn khoai tây chiên.{\i0}
Dialogue: 0,0:17:17.53,0:17:19.60,Default,,0,0,0,,{\c&Hffffff&\i1}Ở đây chẳng được riêng tư gì cả.{\i0}
Dialogue: 0,0:17:19.90,0:17:22.40,Default,,0,0,0,,{\c&Hffffff&}Này, Ono! Tớ cá rằng\N{\c&Hffffff&}cậu đang ăn khoai tây chiên.
Dialogue: 0,0:17:22.54,0:17:25.97,Default,,0,0,0,,{\c&Hffffff&}Ăn cả ngày rồi vẫn còn ăn được sao?\N{\c&Hffffff&}Tớ nghe thấy hết đấy!
Dialogue: 0,0:17:26.54,0:17:28.88,Default,,0,0,0,,{\c&Hffffff&\i1}Ồ, cậu ấy bực rồi kìa!{\i0}
Dialogue: 0,0:17:29.81,0:17:32.31,Default,,0,0,0,,{\c&Hffffff&\i1}Ở nhà cậu ấy không được ăn quà vặt.{\i0}
Dialogue: 0,0:17:33.51,0:17:34.88,Default,,0,0,0,,{\c&Hffffff&\i1}Cảm giác này thật kỳ lạ{\i0}
Dialogue: 0,0:17:35.55,0:17:39.02,Default,,0,0,0,,{\c&Hffffff&\i1}khi biết rằng\NOno đang ở ngay bên kia bức tường.{\i0}
Dialogue: 0,0:17:39.82,0:17:43.26,Default,,0,0,0,,{\c&Hffffff&\i1}Sau quá nhiều việc bất ngờ,\Ncậu ấy đang ở rất gần mình.{\i0}
Dialogue: 0,0:17:44.76,0:17:46.83,Default,,0,0,0,,{\c&Hffffff&\i1}Thật khó mà tin được.{\i0}
Dialogue: 0,0:17:50.00,0:17:52.97,Default,,0,0,0,,{\c&Hffffff&\i1}Dù phải đi ngủ sớm\Nđể chuẩn bị cho ngày mai,{\i0}
Dialogue: 0,0:17:53.03,0:17:54.90,Default,,0,0,0,,{\c&Hffffff&\i1}nhưng mình lại không buồn ngủ tí nào.{\i0}
Dialogue: 0,0:17:55.47,0:17:58.61,Default,,0,0,0,,{\c&Hffffff&\i1}Nhất định là lo lắng\Nvì trận quyết đấu ngày mai.{\i0}
Dialogue: 0,0:18:00.47,0:18:01.41,Default,,0,0,0,,{\c&Hffffff&\i1}Không.{\i0}
Dialogue: 0,0:18:01.71,0:18:04.31,Default,,0,0,0,,{\c&Hffffff&\i1}Là vì Ono đang ở phòng bên cạnh.{\i0}
Dialogue: 0,0:18:04.95,0:18:06.91,Default,,0,0,0,,{\c&Hffffff&\i1}Mình không thể ngừng nghĩ đến cậu ấy.{\i0}
Dialogue: 0,0:18:08.72,0:18:12.75,Default,,0,0,0,,{\c&Hffffff&\i1}Mình biết phải đi ngủ sớm\Nnhưng mình bị sao thế này?{\i0}
Dialogue: 0,0:18:14.62,0:18:16.19,Default,,0,0,0,,{\c&Hffffff&\i1}Không, mình không có chờ.{\i0}
Dialogue: 0,0:18:17.42,0:18:18.43,Default,,0,0,0,,{\c&Hffffff&\i1}Nói dối.{\i0}
Dialogue: 0,0:18:18.49,0:18:22.80,Default,,0,0,0,,{\c&Hffffff&\i1}Không. Tôi không có chờ Ono qua đây.{\i0}
Dialogue: 0,0:18:22.86,0:18:24.20,Default,,0,0,0,,{\c&Hffffff&\i1}Cậu là đồ nói dối!{\i0}
Dialogue: 0,0:18:25.00,0:18:27.30,Default,,0,0,0,,{\c&Hffffff&\i1}Tôi thừa nhận, tôi đang rất chán,{\i0}
Dialogue: 0,0:18:27.37,0:18:30.27,Default,,0,0,0,,{\c&Hffffff&\i1}nếu có Ono để nói chuyện sẽ rất vui,\Nnhưng mà...{\i0}
Dialogue: 0,0:18:31.57,0:18:34.58,Default,,0,0,0,,{\c&Hffffff&\i1}Dù cậu ấy chẳng nói lời nào.{\i0}
Dialogue: 0,0:18:35.94,0:18:38.08,Default,,0,0,0,,{\c&Hffffff&\i1}Giờ này chắc cậu ấy ngủ rồi.{\i0}
Dialogue: 0,0:18:38.55,0:18:42.02,Default,,0,0,0,,{\c&Hffffff&\i1}Vậy một phiên bản khác của tôi\Nthì thế nào?{\i0}
Dialogue: 0,0:18:42.78,0:18:44.59,Default,,0,0,0,,{\c&Hffffff&\i1}Guile màu nâu!{\i0}
Dialogue: 0,0:18:44.65,0:18:46.19,Default,,0,0,0,,{\c&Hffffff&\i1}Sao lại có hai Guile?{\i0}
Dialogue: 0,0:18:46.92,0:18:52.33,Default,,0,0,0,,{\c&Hffffff&\i1}Tôi cho rằng đây là "Guile bắt rùa",\Ncũng chính là trạng thái trái tim cô ấy.{\i0}
Dialogue: 0,0:18:53.29,0:18:55.30,Default,,0,0,0,,{\c&Hffffff&\i1}Đây là biểu hiện của sự do dự!{\i0}
Dialogue: 0,0:18:56.46,0:18:58.90,Default,,0,0,0,,{\c&Hffffff&\i1}Đúng thế. Cô ấy đang chờ.{\i0}
Dialogue: 0,0:19:00.37,0:19:03.34,Default,,0,0,0,,{\c&Hffffff&\i1}Cô ấy đang chờ cậu qua phòng cô ấy!{\i0}
Dialogue: 0,0:19:04.67,0:19:07.37,Default,,0,0,0,,{\c&Hffffff&\i1}Để xem anh nói đúng không.{\i0}
Dialogue: 0,0:19:07.44,0:19:08.28,Default,,0,0,0,,{\c&Hffffff&\i1}Hay lắm!{\i0}
Dialogue: 0,0:19:08.34,0:19:12.58,Default,,0,0,0,,{\c&Hffffff&\i1}- Bom Sonic!\N- Bom Sonic!{\i0}
Dialogue: 0,0:19:12.65,0:19:14.08,Default,,0,0,0,,{\c&Hffffff&\i1}Không ổn rồi, Haruo!{\i0}
Dialogue: 0,0:19:14.15,0:19:15.82,Default,,0,0,0,,{\c&Hffffff&\i1}Cô ấy quá bướng bỉnh!{\i0}
Dialogue: 0,0:19:15.88,0:19:16.98,Default,,0,0,0,,{\c&Hffffff&\i1}Cậu đấy!{\i0}
Dialogue: 0,0:19:17.45,0:19:18.79,Default,,0,0,0,,{\c&Hffffff&\i1}Cậu chủ động đi!{\i0}
Dialogue: 0,0:19:19.35,0:19:22.29,Default,,0,0,0,,{\c&Hffffff&\i1}Lấy hết dũng khí và qua đó đi!{\i0}
Dialogue: 0,0:19:28.76,0:19:32.37,Default,,0,0,0,,{\c&Hffffff&}Này Ono, ở một mình cậu có sợ không?
Dialogue: 0,0:19:32.73,0:19:34.67,Default,,0,0,0,,{\c&Hffffff&}Cậu không sợ có ma sao?
Dialogue: 0,0:19:35.37,0:19:37.94,Default,,0,0,0,,{\c&Hffffff&}Cậu kiểm tra đằng sau bức tranh chưa?
Dialogue: 0,0:19:40.11,0:19:41.71,Default,,0,0,0,,{\c&Hffffff&}Gì vậy? Không thể nào!
Dialogue: 0,0:19:41.78,0:19:44.48,Default,,0,0,0,,{\c&Hffffff&}Chuyện gì vậy? Cậu thật sự thấy ma sao?
Dialogue: 0,0:19:49.02,0:19:51.02,Default,,0,0,0,,{\c&Hffffff&}Ôi trời, chuyện này là thật kìa.
Dialogue: 0,0:19:51.45,0:19:54.79,Default,,0,0,0,,{\c&Hffffff&}Tớ chỉ đùa thôi. Ai ngờ lại có thật chứ?
Dialogue: 0,0:19:54.86,0:19:57.96,Default,,0,0,0,,{\c&Hffffff&}Ôi trời, nó vỡ tan tành rồi.
Dialogue: 0,0:19:58.16,0:20:00.19,Default,,0,0,0,,{\c&Hffffff&}Bên khách sạn sẽ rất giận đấy.
Dialogue: 0,0:20:01.36,0:20:04.13,Default,,0,0,0,,{\c&Hffffff&}Cũng dễ hiểu khi cậu tức giận\N{\c&Hffffff&}vì bị cho ở phòng này.
Dialogue: 0,0:20:05.47,0:20:08.20,Default,,0,0,0,,{\c&Hffffff&}Cậu vẫn rất sợ mấy việc thế này\N{\c&Hffffff&}như mọi khi nhỉ.
Dialogue: 0,0:20:09.40,0:20:11.27,Default,,0,0,0,,{\c&Hffffff&}Cậu đã là học sinh cấp ba rồi đấy.
Dialogue: 0,0:20:11.34,0:20:12.84,Default,,0,0,0,,{\c&Hffffff&}Đừng sợ như vậy chứ.
Dialogue: 0,0:20:20.61,0:20:24.35,Default,,0,0,0,,{\c&Hffffff&}Ngày mai phải thi đấu rồi,\N{\c&Hffffff&}chúng ta đi ngủ nhé, được không?
Dialogue: 0,0:20:25.42,0:20:26.35,Default,,0,0,0,,{\c&Hffffff&}Đau quá!
Dialogue: 0,0:20:26.52,0:20:28.86,Default,,0,0,0,,{\c&Hffffff&}Và đừng nổi nóng như thế nữa!
Dialogue: 0,0:20:29.42,0:20:32.39,Default,,0,0,0,,{\an8\c&Hffffff&}VUI LÒNG DỌN DẸP PHÒNG
Dialogue: 0,0:20:32.46,0:20:35.03,Default,,0,0,0,,{\c&Hffffff&}Ono, đã một giờ sáng rồi đấy.
Dialogue: 0,0:20:36.46,0:20:39.47,Default,,0,0,0,,{\c&Hffffff&}Nếu còn không ngủ\N{\c&Hffffff&}sẽ ảnh hưởng đến cuộc thi ngày mai đấy.
Dialogue: 0,0:20:40.83,0:20:44.00,Default,,0,0,0,,{\c&Hffffff&\i1}Cô gái này im lặng thật.{\i0}
Dialogue: 0,0:20:44.40,0:20:47.87,Default,,0,0,0,,{\c&Hffffff&\i1}Có lẽ thật ra mình chỉ ghét sự yên lặng.{\i0}
Dialogue: 0,0:20:48.78,0:20:50.64,Default,,0,0,0,,{\c&Hffffff&\i1}TV bị hư rồi,{\i0}
Dialogue: 0,0:20:50.81,0:20:52.85,Default,,0,0,0,,{\c&Hffffff&\i1}nên chỉ có thể nói chuyện với Ono.{\i0}
Dialogue: 0,0:20:53.58,0:20:54.92,Default,,0,0,0,,{\c&Hffffff&\i1}Mình sẽ thoát khỏi đây!{\i0}
Dialogue: 0,0:20:55.82,0:20:59.19,Default,,0,0,0,,{\c&Hffffff&}Ono, tớ sẽ ngủ ở phòng có ma của cậu.
Dialogue: 0,0:20:59.25,0:21:01.96,Default,,0,0,0,,{\c&Hffffff&}Cậu có thể ngủ ở phòng của...
Dialogue: 0,0:21:07.73,0:21:08.96,Default,,0,0,0,,{\c&Hffffff&}Cậu đúng là
Dialogue: 0,0:21:09.73,0:21:11.06,Default,,0,0,0,,{\c&Hffffff&}như một đứa trẻ vậy.
Dialogue: 0,0:21:14.13,0:21:16.00,Default,,0,0,0,,{\c&Hffffff&\i1}Ngày mai, chú mèo nhút nhát này{\i0}
Dialogue: 0,0:21:16.07,0:21:19.87,Default,,0,0,0,,{\c&Hffffff&\i1}sẽ đấu với các game thủ giỏi nhất cả nước\Nbằng Zangief.{\i0}
Dialogue: 0,0:21:20.64,0:21:22.74,Default,,0,0,0,,{\c&Hffffff&\i1}Có thể gây ảnh hưởng đến cậu ấy nhiều hơn{\i0}
Dialogue: 0,0:21:22.81,0:21:25.35,Default,,0,0,0,,{\c&Hffffff&\i1}bằng lá bùa trong khung ảnh đó\Nđể mai mình có thể thắng.{\i0}
Dialogue: 0,0:21:26.71,0:21:28.08,Default,,0,0,0,,{\c&Hffffff&\i1}Nhưng vậy không công bằng.{\i0}
Dialogue: 0,0:21:29.38,0:21:31.29,Default,,0,0,0,,{\c&Hffffff&\i1}Ono, cậu tắm chưa?{\i0}
Dialogue: 0,0:21:32.35,0:21:34.22,Default,,0,0,0,,{\c&Hffffff&\i1}Tốt. Cậu đánh răng chưa?{\i0}
Dialogue: 0,0:21:35.49,0:21:36.72,Default,,0,0,0,,{\c&Hffffff&\i1}Tốt. Giỏi lắm.{\i0}
Dialogue: 0,0:21:38.93,0:21:42.16,Default,,0,0,0,,{\c&Hffffff&}Vậy mau ngủ thôi\N{\c&Hffffff&}để còn có sức cho ngày mai nữa.
Dialogue: 0,0:21:47.50,0:21:48.70,Default,,0,0,0,,{\c&Hffffff&\i1}Haruo!{\i0}
Dialogue: 0,0:21:48.77,0:21:51.27,Default,,0,0,0,,{\c&Hffffff&\i1}Tôi đã luôn đối đầu với anh chàng này.{\i0}
Dialogue: 0,0:21:52.64,0:21:56.04,Default,,0,0,0,,{\c&Hffffff&\i1}Cậu nhớ làm thế nào mà tối nay\Nphiên bản màu nâu của tôi xuất hiện chứ?{\i0}
