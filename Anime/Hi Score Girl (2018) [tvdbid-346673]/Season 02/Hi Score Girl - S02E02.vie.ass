Dialogue: 0,0:15:35.30,0:15:37.23,Default,,0,0,0,,{\c&Hffffff&}Tớ vẫn thấy giống một cuộc tranh đấu hơn.
Dialogue: 0,0:15:37.83,0:15:39.13,Default,,0,0,0,,{\c&Hffffff&\i1}Chuyện gì thế này?{\i0}
Dialogue: 0,0:15:39.20,0:15:43.04,Default,,0,0,0,,{\c&Hffffff&\i1}Mình không muốn đấu với game thủ khác\Ntrong cuộc chiến giành địa bàn thế này.{\i0}
Dialogue: 0,0:15:43.24,0:15:45.31,Default,,0,0,0,,{\c&Hffffff&\i1}Mình chẳng thích chút nào.{\i0}
Dialogue: 0,0:15:46.14,0:15:48.44,Default,,0,0,0,,{\c&Hffffff&\i1}Street Fighter Alpha 2{\i0\c&Hffffff&}! Đúng là khác biệt!
Dialogue: 0,0:15:48.51,0:15:50.91,Default,,0,0,0,,{\c&Hffffff&}- Tôi sẽ chọn Rolento, anh bạn!\N{\c&Hffffff&}- Tôi sẽ chọn Gen!
Dialogue: 0,0:15:50.98,0:15:52.18,Default,,0,0,0,,{\c&Hffffff&}Tôi thì sẽ dùng Rose.
Dialogue: 0,0:15:52.71,0:15:55.58,Default,,0,0,0,,{\c&Hffffff&}Nhưng thật sự chúng ta muốn chọn Sakura,\N{\c&Hffffff&}đúng không?
Dialogue: 0,0:15:57.22,0:16:00.02,Default,,0,0,0,,{\c&Hffffff&\i1}Gần đây, Yaguchi không đến đây nữa...{\i0}
Dialogue: 0,0:16:00.55,0:16:02.22,Default,,0,0,0,,{\c&Hffffff&\i1}dù{\i0\c&Hffffff&} Street Fighter Alpha 2 {\c&Hffffff&\i1}đã ra rồi.{\i0}
Dialogue: 0,0:16:05.26,0:16:07.19,Default,,0,0,0,,{\c&Hffffff&\i1}Mình muốn xin lỗi chuyện hôm ấy,{\i0}
Dialogue: 0,0:16:07.70,0:16:09.33,Default,,0,0,0,,{\c&Hffffff&\i1}nhưng lại không thể đến nhà cậu ấy.{\i0}
Dialogue: 0,0:16:10.10,0:16:12.43,Default,,0,0,0,,{\c&Hffffff&\i1}Mình chỉ là không thể xuống nước được.{\i0}
Dialogue: 0,0:16:16.77,0:16:19.97,Default,,0,0,0,,{\c&Hffffff&}Haruo, cậu đúng là\N{\c&Hffffff&}bị nhiễm Shibuya rồi đấy.
Dialogue: 0,0:16:20.44,0:16:22.18,Default,,0,0,0,,{\c&Hffffff&}Nhìn cậu ngồi dưới đất kìa.
Dialogue: 0,0:16:22.38,0:16:24.28,Default,,0,0,0,,{\c&Hffffff&}Không có nhiễm gì đâu!
Dialogue: 0,0:16:24.65,0:16:27.11,Default,,0,0,0,,{\c&Hffffff&}Tớ chỉ nghe nói ở Shibuya\N{\c&Hffffff&}ngồi dưới đất cũng không sao.
Dialogue: 0,0:16:27.18,0:16:30.68,Default,,0,0,0,,{\c&Hffffff&}Bộ đồ cậu đang mặc là sao thế?\N{\c&Hffffff&}Chẳng giống cậu chút nào.
Dialogue: 0,0:16:30.75,0:16:32.89,Default,,0,0,0,,{\c&Hffffff&}Đội Shibuya đưa nó cho tớ đấy.
Dialogue: 0,0:16:33.42,0:16:36.32,Default,,0,0,0,,{\c&Hffffff&}Mấy bộ đồ quê mùa cậu hay mặc\N{\c&Hffffff&}hợp với cậu hơn.
Dialogue: 0,0:16:36.52,0:16:38.89,Default,,0,0,0,,{\c&Hffffff&}- Gì chứ?\N{\c&Hffffff&}- Cậu nghe thấy sao?
Dialogue: 0,0:16:38.96,0:16:42.43,Default,,0,0,0,,{\c&Hffffff&}- Cậu đúng là đã thành dân Shibuya rồi.\N{\c&Hffffff&}- Tớ không có!
Dialogue: 0,0:16:45.50,0:16:49.44,Default,,0,0,0,,{\c&Hffffff&\i1}Ôi trời! Nhạc của trò{\i0\c&Hffffff&} Darius Gaiden\N{\c&Hffffff&\i1}hay thật!{\i0}
Dialogue: 0,0:16:49.90,0:16:52.74,Default,,0,0,0,,{\c&Hffffff&}Dù tớ không giỏi game bắn súng\N{\c&Hffffff&}vẫn thấy rất thích.
Dialogue: 0,0:16:53.07,0:16:59.21,Default,,0,0,0,,{\c&Hffffff&}Tớ chưa chơi xong trong một xu,\N{\c&Hffffff&}nhưng lộ trình là A, C, F, I, N, S, X!
Dialogue: 0,0:16:59.28,0:17:02.95,Default,,0,0,0,,{\c&Hffffff&\i1}Tạ ơn trời, ít nhất bản tính của cậu\Nvẫn như thế, Haruo.{\i0}
Dialogue: 0,0:17:04.59,0:17:07.62,Default,,0,0,0,,{\c&Hffffff&}Mình lại bị lôi kéo\N{\c&Hffffff&}đến một khu giải trí khác rồi!
Dialogue: 0,0:17:07.69,0:17:10.36,Default,,0,0,0,,{\c&Hffffff&}Mình là một học sinh danh dự mà!
Dialogue: 0,0:17:10.42,0:17:11.73,Default,,0,0,0,,{\c&Hffffff&}Chuyện quái quỷ gì đây?
Dialogue: 0,0:17:12.19,0:17:15.00,Default,,0,0,0,,{\c&Hffffff&}Cái máy này không bao giờ\N{\c&Hffffff&}để cậu thắng đâu!
Dialogue: 0,0:17:15.06,0:17:16.00,Default,,0,0,0,,{\c&Hffffff&}Nhảm nhí!
Dialogue: 0,0:17:16.70,0:17:18.47,Default,,0,0,0,,{\c&Hffffff&\i1}Con gái thời nay mạnh bạo thật!{\i0}
Dialogue: 0,0:17:18.93,0:17:22.34,Default,,0,0,0,,{\c&Hffffff&\i1}Đôi vớ đó là sao thế nhỉ?\NTrông cứ như sinh vật sống vậy.{\i0}
