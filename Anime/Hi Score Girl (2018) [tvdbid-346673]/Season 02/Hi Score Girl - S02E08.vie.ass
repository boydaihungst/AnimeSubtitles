Dialogue: 0,0:19:15.45,0:19:18.69,Default,,0,0,0,,{\c&Hffffff&\i1}Thái độ cảm xúc của cậu ấy\Nbiến đổi chỉ trong thời gian ngắn.{\i0}
Dialogue: 0,0:19:24.12,0:19:27.39,Default,,0,0,0,,{\c&Hffffff&}Đây là trận đấu bán kết giữa
Dialogue: 0,0:19:27.83,0:19:29.50,Default,,0,0,0,,{\c&Hffffff&}Haruo Yaguchi
Dialogue: 0,0:19:30.20,0:19:32.07,Default,,0,0,0,,{\c&Hffffff&}và Akira Ono!
Dialogue: 0,0:19:36.07,0:19:37.00,Default,,0,0,0,,{\c&Hffffff&}Tôi nhớ bọn họ!
Dialogue: 0,0:19:37.07,0:19:40.87,Default,,0,0,0,,{\c&Hffffff&}Họ đã từng đấu với nhau\N{\c&Hffffff&}ở trận chung kết Osaka hai năm trước!
Dialogue: 0,0:19:40.94,0:19:43.28,Default,,0,0,0,,{\c&Hffffff&}Thật sao? Đúng là định mệnh rồi!
Dialogue: 0,0:19:45.48,0:19:46.48,Default,,0,0,0,,{\c&Hffffff&\i1}Rốt cuộc...{\i0}
Dialogue: 0,0:19:48.18,0:19:49.62,Default,,0,0,0,,{\c&Hffffff&\i1}Rốt cuộc cũng đến rồi!{\i0}
Dialogue: 0,0:19:51.25,0:19:52.59,Default,,0,0,0,,{\c&Hffffff&\i1}Trận đấu quyết định...{\i0}
Dialogue: 0,0:19:54.86,0:19:56.02,Default,,0,0,0,,{\c&Hffffff&\i1}giữa mình và Ono!{\i0}
Dialogue: 0,0:20:08.07,0:20:09.77,Default,,0,0,0,,{\c&Hffffff&}Trận này sẽ rất gay cấn đây!
Dialogue: 0,0:20:14.44,0:20:15.31,Default,,0,0,0,,{\c&Hffffff&\i1}Ono...{\i0}
Dialogue: 0,0:20:18.88,0:20:20.31,Default,,0,0,0,,{\c&Hffffff&\i1}Ban đầu, tớ từng rất ghét cậu.{\i0}
Dialogue: 0,0:20:21.88,0:20:23.12,Default,,0,0,0,,{\c&Hffffff&\i1}Cậu từng rất đáng ghét.{\i0}
Dialogue: 0,0:20:25.05,0:20:26.79,Default,,0,0,0,,{\c&Hffffff&\i1}Cậu khiến tớ vô cùng khó chịu.{\i0}
Dialogue: 0,0:20:28.92,0:20:29.82,Default,,0,0,0,,{\c&Hffffff&\i1}Nhưng...{\i0}
Dialogue: 0,0:20:32.06,0:20:33.59,Default,,0,0,0,,{\c&Hffffff&\i1}bây giờ thì...{\i0}
Dialogue: 0,0:20:42.87,0:20:44.84,Default,,0,0,0,,{\c&Hffffff&\i1}tớ yêu cậu vô cùng!{\i0}
Dialogue: 0,0:20:45.41,0:20:47.07,Default,,0,0,0,,{\c&Hffffff&\i1}Vòng 1. Bắt đầu!{\i0}
Dialogue: 0,0:20:51.65,0:20:53.41,Default,,0,0,0,,{\c&Hffffff&}Lập tức ra chiêu Screw Piledriver đứng!
Dialogue: 0,0:20:53.48,0:20:54.78,Default,,0,0,0,,{\c&Hffffff&}Cô ấy đang làm rất tốt!
Dialogue: 0,0:20:54.85,0:20:57.38,Default,,0,0,0,,{\c&Hffffff&\i1}Tỉ lệ thắng của Guile và Zangief là 9-1.{\i0}
Dialogue: 0,0:20:58.55,0:21:00.99,Default,,0,0,0,,{\c&Hffffff&\i1}Dù chọn Zangief đầy bất lợi như vậy,{\i0}
Dialogue: 0,0:21:01.46,0:21:03.69,Default,,0,0,0,,{\c&Hffffff&\i1}Ono vẫn dễ dàng áp đảo mình!{\i0}
Dialogue: 0,0:21:08.53,0:21:10.90,Default,,0,0,0,,{\c&Hffffff&}Này! Guile ăn no đòn luôn kìa!
Dialogue: 0,0:21:12.40,0:21:14.20,Default,,0,0,0,,{\c&Hffffff&}Hoàn toàn trái với tỉ lệ bình thường.
Dialogue: 0,0:21:14.77,0:21:17.90,Default,,0,0,0,,{\c&Hffffff&\i1}Một khi mình bị dồn đến góc màn hình\Nvà phải phòng thủ{\i0}
Dialogue: 0,0:21:17.97,0:21:19.37,Default,,0,0,0,,{\c&Hffffff&\i1}thì xem như xong đời!{\i0}
Dialogue: 0,0:21:24.98,0:21:27.55,Default,,0,0,0,,{\c&Hffffff&}Ono chiến thắng trận đầu tiên.
Dialogue: 0,0:21:28.05,0:21:29.75,Default,,0,0,0,,{\c&Hffffff&}Trận đấu diễn ra rất nhanh.
Dialogue: 0,0:21:30.05,0:21:31.95,Default,,0,0,0,,{\c&Hffffff&}Yaguchi không thể làm gì cả!
Dialogue: 0,0:21:32.92,0:21:34.25,Default,,0,0,0,,{\c&Hffffff&\i1}Lợi hại thật đấy, Ono.{\i0}
Dialogue: 0,0:21:34.86,0:21:37.22,Default,,0,0,0,,{\c&Hffffff&\i1}Cậu muốn giết tớ thẳng tay luôn,\Nđúng không?{\i0}
Dialogue: 0,0:21:37.69,0:21:39.16,Default,,0,0,0,,{\c&Hffffff&\i1}Đó chính là Ono thật sự!{\i0}
Dialogue: 0,0:21:40.53,0:21:42.00,Default,,0,0,0,,{\c&Hffffff&\i1}Là cậu muốn đấy nhé!{\i0}
Dialogue: 0,0:21:42.53,0:21:47.17,Default,,0,0,0,,{\c&Hffffff&\i1}Tớ sẽ cho cậu thấy tỉ lệ 10-0\Ncủa Guile và Zangief!{\i0}
Dialogue: 0,0:21:48.14,0:21:49.50,Default,,0,0,0,,{\c&Hffffff&\i1}Phải như thế chứ, Haruo!{\i0}
Dialogue: 0,0:21:49.57,0:21:50.64,Default,,0,0,0,,{\c&Hffffff&}Guile!
Dialogue: 0,0:21:51.27,0:21:53.17,Default,,0,0,0,,{\c&Hffffff&\i1}Lời khuyên dành cho cậu.{\i0}
Dialogue: 0,0:21:53.24,0:21:54.11,Default,,0,0,0,,{\c&Hffffff&\i1}Vâng!{\i0}
Dialogue: 0,0:21:54.21,0:21:55.44,Default,,0,0,0,,{\c&Hffffff&\i1}Bom Sonic!{\i0}
Dialogue: 0,0:21:57.58,0:22:01.15,Default,,0,0,0,,{\c&Hffffff&\i1}Cậu đã mạnh mẽ hơn\Ntheo từng đòn Bom Sonic cậu tung ra!{\i0}
Dialogue: 0,0:22:01.98,0:22:04.02,Default,,0,0,0,,{\c&Hffffff&\i1}Tiến lên đánh bại cô ấy đi, Haruo!{\i0}
Dialogue: 0,0:23:38.01,0:23:39.85,Default,,0,0,0,,{\c&Hffffff&\i1}Tôi rất thích chiếc xe Testarossa.{\i0}
Dialogue: 0,0:23:39.91,0:23:42.02,Default,,0,0,0,,{\c&Hffffff&\i1}Vận tốc có thể lên đến 293km/h.{\i0}
Dialogue: 0,0:23:42.08,0:23:43.35,Default,,0,0,0,,{\c&Hffffff&\i1}Tôi đi từ Mizonokuchi!{\i0}
Dialogue: 0,0:23:43.42,0:23:45.49,Default,,0,0,0,,{\c&Hffffff&\i1}Còn bao lâu vậy? Không còn thời gian nữa!{\i0}
Dialogue: 0,0:23:45.69,0:23:49.19,Default,,0,0,0,,{\c&Hffffff&\i1}Dù đang ở số mấy, tôi vẫn nhấn ga hết cỡ!{\i0}
