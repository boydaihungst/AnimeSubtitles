Dialogue: 0,0:00:23.06,0:00:26.86,Default,,0,0,0,,♪Đêm tối, trăng ướt, máu lạnh♪
Dialogue: 0,0:00:27.26,0:00:30.66,Default,,0,0,0,,♪Phơi bày trước\Nđôi mắt sợ ánh sáng của ta♪
Dialogue: 0,0:00:30.90,0:00:34.42,Default,,0,0,0,,♪Là sáng bừng hay ấm áp♪
Dialogue: 0,0:00:34.54,0:00:37.98,Default,,0,0,0,,♪Ta chỉ có thể suy đoán bằng trực giác♪
Dialogue: 0,0:00:38.70,0:00:46.10,Default,,0,0,0,,♪Ôi, tình yêu khuynh thế như ngọc,\Ntạo nên ta♪
Dialogue: 0,0:00:46.54,0:00:53.82,Default,,0,0,0,,♪Ôi, tơ tình vương vấn♪
Dialogue: 0,0:00:55.22,0:00:58.82,Default,,0,0,0,,♪Ta không sợ trên cõi đời này♪
Dialogue: 0,0:00:59.10,0:01:02.70,Default,,0,0,0,,♪Chúng sinh đối xử với ta ra sao♪
Dialogue: 0,0:01:03.38,0:01:06.50,Default,,0,0,0,,♪Đột phá, vùng vẫy♪
Dialogue: 0,0:01:06.78,0:01:11.14,Default,,0,0,0,,♪Làm sao để phân biệt chính tà, thiện ác♪
Dialogue: 0,0:01:11.50,0:01:14.82,Default,,0,0,0,,♪Từng có khoảnh khắc yếu đuối♪
Dialogue: 0,0:01:15.14,0:01:18.58,Default,,0,0,0,,♪Dùng nụ hôn tình yêu\Nđể vết thương lành lại♪
Dialogue: 0,0:01:19.06,0:01:22.54,Default,,0,0,0,,♪Sự tồn tại của ta♪
Dialogue: 0,0:01:22.98,0:01:29.62,Default,,0,0,0,,♪Sẽ không vì gai nhọn mà gãy cánh♪
Dialogue: 0,0:01:31.10,0:01:35.94,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:01:35.94,0:01:38.94,Default,,0,0,0,,[Tập 3]
Dialogue: 0,0:01:38.94,0:01:40.02,Default,,0,0,0,,[Diệp Phủ]
Dialogue: 0,0:01:40.56,0:01:42.15,Default,,0,0,0,,Hắn nói chuyện với chim?
Dialogue: 0,0:01:42.15,0:01:42.71,Default,,0,0,0,,Đúng thế.
Dialogue: 0,0:01:42.71,0:01:44.20,Default,,0,0,0,,Còn cả ruồi muỗi nữa.
Dialogue: 0,0:01:44.35,0:01:45.92,Default,,0,0,0,,Hôm đó cô gia đi ngang qua bờ hồ,
Dialogue: 0,0:01:45.92,0:01:47.40,Default,,0,0,0,,trên bờ có một con ếch,
Dialogue: 0,0:01:47.40,0:01:48.79,Default,,0,0,0,,họ còn nói chuyện với nhau một lúc.
Dialogue: 0,0:01:49.99,0:01:52.27,Default,,0,0,0,,[Cô gia đúng là quái nhân,]
Dialogue: 0,0:01:52.43,0:01:54.40,Default,,0,0,0,,[có thể nói chuyện với ếch lâu như thế.]
Dialogue: 0,0:01:54.40,0:01:55.20,Default,,0,0,0,,Lẩm bẩm nói chuyện một mình kìa.
Dialogue: 0,0:01:55.20,0:01:57.35,Default,,0,0,0,,- [Hạ nhân bên hồ người qua kẻ lại]\N- Đúng thế.
Dialogue: 0,0:01:57.35,0:01:58.63,Default,,0,0,0,,[đều chỉ chỏ cười nhạo ngài ấy.]
Dialogue: 0,0:01:58.63,0:02:00.40,Default,,0,0,0,,Ngươi đừng quậy nữa.
Dialogue: 0,0:02:01.12,0:02:02.99,Default,,0,0,0,,[Toàn chuyện vớ vẩn gì thế?]
Dialogue: 0,0:02:03.76,0:02:05.12,Default,,0,0,0,,[Ta đã nói với em rồi,]
Dialogue: 0,0:02:05.32,0:02:07.60,Default,,0,0,0,,[sau này mấy chuyện theo dõi bới móc\Nthì đừng làm nữa,]
Dialogue: 0,0:02:07.60,0:02:09.16,Default,,0,0,0,,[em giúp ta\Ntrông chừng Đàm Đài Tẫn là được rồi.]
Dialogue: 0,0:02:09.55,0:02:11.76,Default,,0,0,0,,[Thứ nhất,\Nkhi hắn có hành động khả nghi,]
Dialogue: 0,0:02:12.11,0:02:14.07,Default,,0,0,0,,[nhất là mấy trò giả thần giả quỷ]
Dialogue: 0,0:02:14.23,0:02:15.20,Default,,0,0,0,,[thì phải báo cho ta ngay.]
Dialogue: 0,0:02:15.48,0:02:17.23,Default,,0,0,0,,[Thứ hai là phải theo sát chút,]
Dialogue: 0,0:02:17.44,0:02:19.28,Default,,0,0,0,,[đừng để hắn chết cóng, chết đói,]
Dialogue: 0,0:02:19.28,0:02:20.20,Default,,0,0,0,,[chết vì bị người ta ức hiếp.]
Dialogue: 0,0:02:20.79,0:02:23.16,Default,,0,0,0,,[Cô gia thường ngày\Ncòn không bước qua cổng lớn Diệp Phủ,]
Dialogue: 0,0:02:23.35,0:02:25.44,Default,,0,0,0,,[mọi hành động\Nđều nằm trong tầm mắt người khác,]
Dialogue: 0,0:02:25.83,0:02:27.20,Default,,0,0,0,,[không thể làm ra]
Dialogue: 0,0:02:27.20,0:02:28.63,Default,,0,0,0,,[chuyện giả thần giả quỷ gì được đâu.]
Dialogue: 0,0:02:29.79,0:02:30.79,Default,,0,0,0,,[Nói chuyện với ngài ấy]
Dialogue: 0,0:02:30.79,0:02:32.63,Default,,0,0,0,,[còn có cả chim sẻ, bươm bướm gì đó.]
Dialogue: 0,0:02:32.67,0:02:35.48,Default,,0,0,0,,[Tóm lại\Nngoài không nói chuyện với người ra,]
Dialogue: 0,0:02:35.55,0:02:37.44,Default,,0,0,0,,[động vật nào\Nngài ấy cũng có thể nói vài câu.]
Dialogue: 0,0:02:38.04,0:02:38.63,Default,,0,0,0,,[Tiểu thư,]
Dialogue: 0,0:02:39.23,0:02:41.16,Default,,0,0,0,,[người nói xem có phải ngài ấy]
Dialogue: 0,0:02:41.16,0:02:43.04,Default,,0,0,0,,có thể nói chuyện\Nvới động vật nhỏ thật không?
Dialogue: 0,0:02:50.00,0:02:51.51,Default,,0,0,0,,Ta thấy em mệt quá rồi đấy.
Dialogue: 0,0:02:52.20,0:02:54.35,Default,,0,0,0,,Mấy ngày này em cứ nghỉ ngơi đi.
Dialogue: 0,0:02:55.16,0:02:56.39,Default,,0,0,0,,Tiểu thư,
Dialogue: 0,0:02:56.39,0:02:58.76,Default,,0,0,0,,em nhìn thấy họ nói chuyện thật mà.
Dialogue: 0,0:02:59.44,0:03:00.72,Default,,0,0,0,,Chắc là do cả phủ này
Dialogue: 0,0:03:00.72,0:03:02.35,Default,,0,0,0,,không ai chịu nói chuyện với hắn.
Dialogue: 0,0:03:03.11,0:03:05.35,Default,,0,0,0,,Con người ta cả năm không nói chuyện
Dialogue: 0,0:03:05.35,0:03:06.16,Default,,0,0,0,,thì sẽ bí bách lắm.
Dialogue: 0,0:03:06.48,0:03:07.67,Default,,0,0,0,,Kể ra
Dialogue: 0,0:03:08.28,0:03:10.04,Default,,0,0,0,,cô gia cũng đáng thương thật.
Dialogue: 0,0:03:13.63,0:03:16.04,Default,,0,0,0,,[Lẽ nào vì kìm nén quá lâu,]
Dialogue: 0,0:03:16.04,0:03:17.92,Default,,0,0,0,,[tâm lý vặn vẹo\Nnên mới biến thành Ma Thần?]
Dialogue: 0,0:03:19.32,0:03:19.95,Default,,0,0,0,,[Không được.]
Dialogue: 0,0:03:20.23,0:03:21.48,Default,,0,0,0,,[Mình phải đi thăm dò hắn xem sao.]
Dialogue: 0,0:03:46.28,0:03:46.95,Default,,0,0,0,,Nhị tiểu thư,
Dialogue: 0,0:03:50.92,0:03:52.35,Default,,0,0,0,,mấy ngày nay cô cứ bám theo ta
Dialogue: 0,0:03:52.55,0:03:53.95,Default,,0,0,0,,là vì có chuyện muốn nói sao?
Dialogue: 0,0:03:59.39,0:04:00.35,Default,,0,0,0,,Ngươi đoán đúng rồi.
Dialogue: 0,0:04:00.76,0:04:02.35,Default,,0,0,0,,Mấy ngày nay ta rảnh rỗi vô vị
Dialogue: 0,0:04:02.63,0:04:04.51,Default,,0,0,0,,nên muốn tìm người nói chuyện thôi.
Dialogue: 0,0:04:09.76,0:04:10.48,Default,,0,0,0,,Cô nói đi.
Dialogue: 0,0:04:16.60,0:04:18.35,Default,,0,0,0,,Hôm nay trời đẹp quá.
Dialogue: 0,0:04:22.67,0:04:23.52,Default,,0,0,0,,Lạnh quá.
Dialogue: 0,0:04:31.11,0:04:31.67,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:04:32.75,0:04:33.52,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:04:35.35,0:04:36.75,Default,,0,0,0,,Thường ngày ngươi đi đâu cũng bị bắt nạt,
Dialogue: 0,0:04:36.75,0:04:38.04,Default,,0,0,0,,trong lòng nghĩ thế nào?
Dialogue: 0,0:04:38.67,0:04:39.35,Default,,0,0,0,,Không nghĩ gì cả.
Dialogue: 0,0:04:40.11,0:04:41.08,Default,,0,0,0,,Sao lại thế được.
Dialogue: 0,0:04:41.35,0:04:42.35,Default,,0,0,0,,Con người ta bị hạ nhục,
Dialogue: 0,0:04:42.35,0:04:44.35,Default,,0,0,0,,trong lòng ắt sẽ giận dữ,\Nsinh lòng thù hận.
Dialogue: 0,0:04:46.67,0:04:49.52,Default,,0,0,0,,Ngươi chưa từng nghĩ phải làm gì đó sao?
Dialogue: 0,0:04:51.40,0:04:52.23,Default,,0,0,0,,Chẳng hạn như
Dialogue: 0,0:04:53.23,0:04:54.23,Default,,0,0,0,,giết ta.
Dialogue: 0,0:05:04.48,0:05:05.96,Default,,0,0,0,,Cô muốn ta giết cô?
Dialogue: 0,0:05:08.35,0:05:08.99,Default,,0,0,0,,Không có.
Dialogue: 0,0:05:09.31,0:05:10.55,Default,,0,0,0,,Ta không có ý này.
Dialogue: 0,0:05:11.35,0:05:14.16,Default,,0,0,0,,Ta chỉ muốn biết ngươi nghĩ thế nào thôi.
Dialogue: 0,0:05:14.75,0:05:16.35,Default,,0,0,0,,Ta nghĩ thế nào không quan trọng.
Dialogue: 0,0:05:17.23,0:05:18.35,Default,,0,0,0,,Các cô hạ nhục ta
Dialogue: 0,0:05:18.48,0:05:20.35,Default,,0,0,0,,không phải vì ta đã làm gì,
Dialogue: 0,0:05:21.04,0:05:23.11,Default,,0,0,0,,chỉ vì các cô muốn thế mà thôi.
Dialogue: 0,0:05:23.64,0:05:25.11,Default,,0,0,0,,Ta không thể thay đổi được các cô.
Dialogue: 0,0:05:26.19,0:05:30.43,Default,,0,0,0,,Còn về việc trong lòng ta\Ncó oán hận hay không
Dialogue: 0,0:05:31.16,0:05:32.23,Default,,0,0,0,,thì chẳng có nghĩa lý gì.
Dialogue: 0,0:05:33.08,0:05:34.96,Default,,0,0,0,,Ta chỉ là con tin đến từ nước Cảnh,
Dialogue: 0,0:05:36.11,0:05:37.67,Default,,0,0,0,,sống đã đủ mệt rồi,
Dialogue: 0,0:05:39.52,0:05:41.35,Default,,0,0,0,,không còn sức\Nmà bận tâm đến những chuyện khác.
Dialogue: 0,0:05:47.64,0:05:49.23,Default,,0,0,0,,[Nơi này là 500 năm trước,]
Dialogue: 0,0:05:49.23,0:05:51.35,Default,,0,0,0,,[Tiểu Ma Thần quả thực\Nkhông làm việc gì xấu,]
Dialogue: 0,0:05:51.43,0:05:54.19,Default,,0,0,0,,[hoặc là hắn vẫn chưa kịp làm việc xấu,]
Dialogue: 0,0:05:54.55,0:05:57.52,Default,,0,0,0,,[ngược lại người khác\Nluôn làm việc xấu với hắn.]
Dialogue: 0,0:05:58.11,0:06:00.96,Default,,0,0,0,,[Có lẽ hắn trở thành Ma Thần]
Dialogue: 0,0:06:01.35,0:06:03.11,Default,,0,0,0,,[thật sự chỉ là một chuỗi bi kịch.]
Dialogue: 0,0:06:03.11,0:06:04.79,Default,,0,0,0,,[Chỉ cần có người chịu kéo hắn lại,]
Dialogue: 0,0:06:04.79,0:06:06.67,Default,,0,0,0,,[quan tâm hắn, chăm sóc hắn,]
Dialogue: 0,0:06:06.96,0:06:08.75,Default,,0,0,0,,[hắn đâu đến mức phải sa vào Ma đạo.]
Dialogue: 0,0:06:14.72,0:06:15.64,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:06:16.31,0:06:17.35,Default,,0,0,0,,tuy rằng hơi mệt
Dialogue: 0,0:06:17.48,0:06:18.79,Default,,0,0,0,,nhưng ngươi phải sống cho tốt.
Dialogue: 0,0:06:20.35,0:06:22.19,Default,,0,0,0,,Nếu ngươi thấy chán thì có thể tới tìm ta.
Dialogue: 0,0:06:22.55,0:06:23.79,Default,,0,0,0,,Con người ta nếu kìm nén quá lâu,
Dialogue: 0,0:06:24.16,0:06:25.60,Default,,0,0,0,,rất dễ trở nên biến thái.
Dialogue: 0,0:06:28.16,0:06:29.31,Default,,0,0,0,,Như cô sao?
Dialogue: 0,0:06:38.28,0:06:40.35,Default,,0,0,0,,Lúc nãy ngươi cười lên rất đẹp.
Dialogue: 0,0:06:40.60,0:06:42.96,Default,,0,0,0,,Trong phủ này có bao nhiêu người như thế,
Dialogue: 0,0:06:43.11,0:06:44.35,Default,,0,0,0,,chắc chắn sẽ có người thích ngươi,
Dialogue: 0,0:06:44.35,0:06:45.35,Default,,0,0,0,,chịu bắt chuyện với ngươi.
Dialogue: 0,0:06:51.35,0:06:52.72,Default,,0,0,0,,Không ai thích ta hết.
Dialogue: 0,0:06:53.64,0:06:55.19,Default,,0,0,0,,Ta cũng không cần ai thích.
Dialogue: 0,0:07:07.35,0:07:08.04,Default,,0,0,0,,Tiểu thư.
Dialogue: 0,0:07:08.28,0:07:09.11,Default,,0,0,0,,Tiểu thư, người xem.
Dialogue: 0,0:07:09.35,0:07:11.35,Default,,0,0,0,,Em đã đi dạo một vòng\Ncác tiệm may trong kinh thành,
Dialogue: 0,0:07:11.35,0:07:13.08,Default,,0,0,0,,mua được mấy chiếc áo khoác dày về đây.
Dialogue: 0,0:07:13.28,0:07:14.23,Default,,0,0,0,,Người chọn cho cô gia đi.
Dialogue: 0,0:07:21.92,0:07:23.35,Default,,0,0,0,,Chiếc này mỏng quá.
Dialogue: 0,0:07:25.67,0:07:26.40,Default,,0,0,0,,Chiếc này dày,
Dialogue: 0,0:07:26.60,0:07:27.52,Default,,0,0,0,,màu cũng đẹp.
Dialogue: 0,0:07:28.72,0:07:29.79,Default,,0,0,0,,Chiếc này to quá,
Dialogue: 0,0:07:29.79,0:07:31.16,Default,,0,0,0,,hắn không mặc được đâu.
Dialogue: 0,0:07:31.60,0:07:34.55,Default,,0,0,0,,Em đâu biết cỡ người của cô gia.
Dialogue: 0,0:07:34.96,0:07:36.96,Default,,0,0,0,,Em đi lấy kéo và đồ khâu tới đây cho ta.
Dialogue: 0,0:07:42.35,0:07:43.19,Default,,0,0,0,,Tiểu thư,
Dialogue: 0,0:07:43.40,0:07:45.75,Default,,0,0,0,,có câu này em không biết có nên hỏi không.
Dialogue: 0,0:07:46.08,0:07:47.16,Default,,0,0,0,,Vậy em đừng hỏi.
Dialogue: 0,0:07:48.64,0:07:51.28,Default,,0,0,0,,Tại sao bây giờ\Nngười lại đối tốt với cô gia như thế?
Dialogue: 0,0:07:51.28,0:07:52.48,Default,,0,0,0,,Vì ta sợ.
Dialogue: 0,0:07:52.79,0:07:54.52,Default,,0,0,0,,Sợ? Sợ cái gì?
Dialogue: 0,0:07:56.19,0:07:57.28,Default,,0,0,0,,Ta sợ lỡ chẳng may cô gia của em
Dialogue: 0,0:07:57.28,0:07:58.79,Default,,0,0,0,,bị chết cóng
Dialogue: 0,0:07:58.79,0:08:00.19,Default,,0,0,0,,thì sẽ kéo chúng ta chết chung.
Dialogue: 0,0:08:01.23,0:08:01.96,Default,,0,0,0,,Ta còn sợ
Dialogue: 0,0:08:02.11,0:08:03.67,Default,,0,0,0,,hàng ngày hắn bị hạ nhục ngược đãi,
Dialogue: 0,0:08:04.28,0:08:06.23,Default,,0,0,0,,một ngày nào đó hắn bị dồn ép quá mức,
Dialogue: 0,0:08:06.35,0:08:07.60,Default,,0,0,0,,không muốn bị giận cá chém thớt nữa,
Dialogue: 0,0:08:08.35,0:08:10.31,Default,,0,0,0,,biến thành con hổ mặc áo choàng đen
Dialogue: 0,0:08:11.08,0:08:12.04,Default,,0,0,0,,ăn thịt chúng ta.
Dialogue: 0,0:08:14.08,0:08:17.35,Default,,0,0,0,,Sao hổ lại mặc áo choàng đen?
Dialogue: 0,0:08:33.82,0:08:41.54,Default,,0,0,0,,[Đừng để chết cóng]
Dialogue: 0,0:09:09.16,0:09:10.59,Default,,0,0,0,,Đây là áo của ta?
Dialogue: 0,0:09:26.95,0:09:28.95,Default,,0,0,0,,Một tên ăn bám ẻo lả
Dialogue: 0,0:09:29.31,0:09:31.04,Default,,0,0,0,,lại có tiền mua áo mới?
Dialogue: 0,0:09:41.47,0:09:42.19,Default,,0,0,0,,Đứng lại.
Dialogue: 0,0:09:46.00,0:09:46.59,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:09:47.12,0:09:47.71,Default,,0,0,0,,sao thế?
Dialogue: 0,0:09:52.04,0:09:53.47,Default,,0,0,0,,Áo của ta bị ngươi làm rách rồi.
Dialogue: 0,0:09:54.95,0:09:55.59,Default,,0,0,0,,Rách?
Dialogue: 0,0:10:00.28,0:10:01.24,Default,,0,0,0,,Đây mới là rách.
Dialogue: 0,0:10:06.64,0:10:07.92,Default,,0,0,0,,Sao lại nổi giận thế?
Dialogue: 0,0:10:09.24,0:10:11.31,Default,,0,0,0,,Có phải mấy ngày nay\Nnhị muội ta không đánh ngươi,
Dialogue: 0,0:10:11.79,0:10:13.36,Default,,0,0,0,,ngươi cũng bạo gan hơn đúng không?
Dialogue: 0,0:10:15.64,0:10:17.36,Default,,0,0,0,,Còn dám trừng mắt nhìn ta.
Dialogue: 0,0:10:17.36,0:10:18.00,Default,,0,0,0,,Diệp gia chúng ta
Dialogue: 0,0:10:18.00,0:10:19.64,Default,,0,0,0,,cho ngươi sống trong nhung lụa,
Dialogue: 0,0:10:21.31,0:10:23.31,Default,,0,0,0,,để ngươi học được thói cãi lại chủ tử?
Dialogue: 0,0:10:23.71,0:10:25.24,Default,,0,0,0,,Có tin ta đánh ngươi ngay bây giờ không?
Dialogue: 0,0:10:27.95,0:10:28.71,Default,,0,0,0,,Tại sao lại đánh người?
Dialogue: 0,0:10:29.55,0:10:31.04,Default,,0,0,0,,Ơ hay, muội kéo ta làm gì?
Dialogue: 0,0:10:33.07,0:10:33.71,Default,,0,0,0,,Vừa rồi ta còn giúp muội
Dialogue: 0,0:10:33.71,0:10:35.43,Default,,0,0,0,,xé rách áo của tên ẻo lả kia.
Dialogue: 0,0:10:36.07,0:10:37.07,Default,,0,0,0,,Muội nhìn bộ dạng đắc ý của hắn đi.
Dialogue: 0,0:10:40.47,0:10:41.31,Default,,0,0,0,,Diệp Trạch Vũ,
Dialogue: 0,0:10:41.67,0:10:42.36,Default,,0,0,0,,đưa tiền đây.
Dialogue: 0,0:10:43.04,0:10:44.16,Default,,0,0,0,,Cha không dạy huynh
Dialogue: 0,0:10:44.16,0:10:45.71,Default,,0,0,0,,làm rách áo người ta\Nthì phải đền một bộ à?
Dialogue: 0,0:10:46.04,0:10:46.55,Default,,0,0,0,,Ơ kìa.
Dialogue: 0,0:10:47.47,0:10:48.92,Default,,0,0,0,,Tịch Vụ, muội uống nhầm thuốc à?
Dialogue: 0,0:10:49.04,0:10:49.92,Default,,0,0,0,,Huynh có đưa không?
Dialogue: 0,0:10:50.36,0:10:51.95,Default,,0,0,0,,Không đưa thì ta đi mách cha.
Dialogue: 0,0:10:56.12,0:10:56.67,Default,,0,0,0,,Ta đưa.
Dialogue: 0,0:10:58.59,0:10:59.28,Default,,0,0,0,,Đây!
Dialogue: 0,0:11:01.31,0:11:02.12,Default,,0,0,0,,Thấy sắc quên nghĩa.
Dialogue: 0,0:11:09.59,0:11:11.12,Default,,0,0,0,,Ngươi đừng chấp nhặt với tên đó.
Dialogue: 0,0:11:11.24,0:11:12.83,Default,,0,0,0,,Rách to quá,
Dialogue: 0,0:11:12.83,0:11:13.60,Default,,0,0,0,,khó mà vá lại được.
Dialogue: 0,0:11:16.88,0:11:18.67,Default,,0,0,0,,Bộ y phục này không mặc được nữa rồi,
Dialogue: 0,0:11:19.07,0:11:19.95,Default,,0,0,0,,mua bộ khác đi.
Dialogue: 0,0:11:24.40,0:11:25.59,Default,,0,0,0,,Bộ đồ này cô tặng ta
Dialogue: 0,0:11:25.59,0:11:26.79,Default,,0,0,0,,thì nó là đồ của ta.
Dialogue: 0,0:11:29.48,0:11:31.21,Default,,0,0,0,,Được, vậy ngươi cứ giữ lấy.
Dialogue: 0,0:11:31.64,0:11:34.24,Default,,0,0,0,,Ta bảo Xuân Đào\Nmua bộ mới cho ngươi là được.
Dialogue: 0,0:11:36.52,0:11:37.41,Default,,0,0,0,,Tiểu thư, tiểu thư.
Dialogue: 0,0:11:37.60,0:11:38.52,Default,,0,0,0,,Trong cung truyền chỉ,
Dialogue: 0,0:11:38.52,0:11:40.00,Default,,0,0,0,,lệnh cô gia vào cung diện thánh.
Dialogue: 0,0:11:44.17,0:11:46.72,Default,,0,0,0,,[Tiểu Ma Thần còn qua lại với trong cung.]
Dialogue: 0,0:11:47.52,0:11:49.21,Default,,0,0,0,,[Không được, ta phải đi xem thế nào.]
Dialogue: 0,0:11:49.52,0:11:51.09,Default,,0,0,0,,[Đừng có giấu âm mưu gì đấy.]
Dialogue: 0,0:11:54.04,0:11:54.59,Default,,0,0,0,,Ta đi cùng ngươi.
Dialogue: 0,0:12:08.16,0:12:12.40,Default,,0,0,0,,Truyền Đàm Đài Tẫn vào điện yết kiến.
Dialogue: 0,0:12:17.08,0:12:18.08,Default,,0,0,0,,Tham kiến bệ hạ.
Dialogue: 0,0:12:19.35,0:12:20.23,Default,,0,0,0,,Diệp nhị tiểu thư,
Dialogue: 0,0:12:20.63,0:12:22.83,Default,,0,0,0,,hôm nay thánh thượng chỉ gặp\Nmột mình Đàm Đài điện hạ.
Dialogue: 0,0:12:23.40,0:12:24.44,Default,,0,0,0,,Nếu cô không có việc gì,
Dialogue: 0,0:12:24.63,0:12:26.99,Default,,0,0,0,,chi bằng đi nói chuyện với\NThái hậu nương nương.
Dialogue: 0,0:12:27.28,0:12:28.08,Default,,0,0,0,,Không sao.
Dialogue: 0,0:12:28.28,0:12:30.08,Default,,0,0,0,,Trong cung này ta rất thông thuộc.
Dialogue: 0,0:12:30.40,0:12:31.59,Default,,0,0,0,,Ta đi dạo xung quanh được rồi.
Dialogue: 0,0:12:32.16,0:12:32.59,Default,,0,0,0,,Vâng.
Dialogue: 0,0:12:34.08,0:12:37.08,Default,,0,0,0,,[Ma Thần được nuôi dưỡng\Ntừ trong thâm cung.]
Dialogue: 0,0:12:38.04,0:12:39.96,Default,,0,0,0,,[Đàm Đài Tẫn trước kia\Nrốt cuộc đã trải qua chuyện gì,]
Dialogue: 0,0:12:39.96,0:12:41.28,Default,,0,0,0,,[trưởng thành như thế nào?]
Dialogue: 0,0:12:41.56,0:12:44.20,Default,,0,0,0,,[Tại sao lại chọn trúng hắn\Ntrở thành Ma Thần?]
Dialogue: 0,0:12:44.32,0:12:45.80,Default,,0,0,0,,[Đến nơi hắn từng ở xem sao,]
Dialogue: 0,0:12:45.80,0:12:47.23,Default,,0,0,0,,[biết đâu sẽ phát hiện manh mối gì đó.]
Dialogue: 0,0:12:51.23,0:12:51.99,Default,,0,0,0,,Tỷ tỷ.
Dialogue: 0,0:12:52.47,0:12:53.40,Default,,0,0,0,,Diệp nhị tiểu thư.
Dialogue: 0,0:12:54.20,0:12:57.32,Default,,0,0,0,,Tỷ có biết Đàm Đài Tẫn\Nngày trước ở đâu không?
Dialogue: 0,0:12:58.04,0:12:58.75,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:12:59.11,0:13:01.32,Default,,0,0,0,,ở đây có một bức thư được gửi từ
Dialogue: 0,0:13:01.32,0:13:03.11,Default,,0,0,0,,hoàng cung nước Cảnh.
Dialogue: 0,0:13:03.40,0:13:04.40,Default,,0,0,0,,Ngươi có muốn xem không?
Dialogue: 0,0:13:06.99,0:13:07.51,Default,,0,0,0,,Không muốn.
Dialogue: 0,0:13:14.83,0:13:17.47,Default,,0,0,0,,Muốn biết tin tức của người thân
Dialogue: 0,0:13:17.47,0:13:18.99,Default,,0,0,0,,là lẽ thường tình.
Dialogue: 0,0:13:18.99,0:13:20.23,Default,,0,0,0,,Ngươi nói không muốn
Dialogue: 0,0:13:20.23,0:13:21.80,Default,,0,0,0,,lại thành ra giả tạo quá đấy.
Dialogue: 0,0:13:21.80,0:13:22.99,Default,,0,0,0,,Nước Cảnh với thần mà nói
Dialogue: 0,0:13:23.11,0:13:24.40,Default,,0,0,0,,là nơi xa xôi ngàn dặm,
Dialogue: 0,0:13:24.80,0:13:27.23,Default,,0,0,0,,kiếp này không thể đặt chân tới nữa.
Dialogue: 0,0:13:28.08,0:13:29.20,Default,,0,0,0,,Cảnh vương
Dialogue: 0,0:13:29.75,0:13:31.20,Default,,0,0,0,,cũng đã xa cách thần 20 năm rồi,
Dialogue: 0,0:13:31.59,0:13:34.11,Default,,0,0,0,,kiếp này cũng không thể gặp lại.
Dialogue: 0,0:13:34.44,0:13:36.51,Default,,0,0,0,,Người xa lạ, nơi xa lạ,
Dialogue: 0,0:13:37.59,0:13:38.51,Default,,0,0,0,,thần không quan tâm,
Dialogue: 0,0:13:40.23,0:13:41.40,Default,,0,0,0,,cũng không cần quan tâm.
Dialogue: 0,0:13:45.40,0:13:47.20,Default,,0,0,0,,Không quan tâm thật sao?
Dialogue: 0,0:13:48.11,0:13:50.16,Default,,0,0,0,,Ngươi có biết Cảnh vương Đàm Đài Vô Cực
Dialogue: 0,0:13:50.16,0:13:51.51,Default,,0,0,0,,sắp chết vì bệnh không?
Dialogue: 0,0:13:51.51,0:13:53.32,Default,,0,0,0,,Huynh trưởng của ngươi, Đàm Đài Minh Lãng
Dialogue: 0,0:13:53.32,0:13:55.04,Default,,0,0,0,,được phong làm Thái tử.
Dialogue: 0,0:13:56.47,0:13:57.96,Default,,0,0,0,,[Ra là thế.]
Dialogue: 0,0:14:04.35,0:14:05.04,Default,,0,0,0,,Thần biết rồi.
Dialogue: 0,0:14:07.04,0:14:07.96,Default,,0,0,0,,Đa tạ bệ hạ.
Dialogue: 0,0:14:08.40,0:14:10.63,Default,,0,0,0,,Đàm Đài Minh Lãng dã tâm hừng hực,
Dialogue: 0,0:14:10.63,0:14:12.28,Default,,0,0,0,,gần đây nhiều lần xâm phạm,
Dialogue: 0,0:14:12.28,0:14:13.51,Default,,0,0,0,,chưa từng bận tâm tới
Dialogue: 0,0:14:13.51,0:14:15.56,Default,,0,0,0,,cảnh ngộ của đệ đệ như ngươi.
Dialogue: 0,0:14:16.28,0:14:19.08,Default,,0,0,0,,Lẽ nào thật sự không sợ
Dialogue: 0,0:14:19.08,0:14:20.96,Default,,0,0,0,,trẫm chém đầu ngươi
Dialogue: 0,0:14:21.40,0:14:22.68,Default,,0,0,0,,tế cờ sao?
Dialogue: 0,0:14:32.75,0:14:34.51,Default,,0,0,0,,Đàm Đài Minh Lãng đối với thần mà nói
Dialogue: 0,0:14:35.23,0:14:37.56,Default,,0,0,0,,chẳng qua chỉ là một người xa lạ\Ncó danh phận huynh đệ.
Dialogue: 0,0:14:38.16,0:14:40.35,Default,,0,0,0,,Tất nhiên hắn sẽ không bận tâm\Ntới tính mạng của thần.
Dialogue: 0,0:14:41.23,0:14:42.80,Default,,0,0,0,,Nếu bệ hạ muốn lấy thần ra tế cờ,
Dialogue: 0,0:14:43.32,0:14:46.68,Default,,0,0,0,,chỉ e là vừa đúng tâm nguyện của hắn.
Dialogue: 0,0:14:48.08,0:14:49.47,Default,,0,0,0,,Hắn tàn nhẫn với ngươi như thế,
Dialogue: 0,0:14:49.80,0:14:51.99,Default,,0,0,0,,lẽ nào ngươi chưa từng nghĩ
Dialogue: 0,0:14:52.20,0:14:53.40,Default,,0,0,0,,sẽ trở về nước Cảnh,
Dialogue: 0,0:14:53.40,0:14:55.40,Default,,0,0,0,,giành lại mọi thứ thuộc về ngươi sao?
Dialogue: 0,0:14:57.99,0:15:00.63,Default,,0,0,0,,[Hóa ra là muốn\Nchơi chiêu ngao cò tranh đấu.]
Dialogue: 0,0:15:04.35,0:15:05.08,Default,,0,0,0,,Bệ hạ,
Dialogue: 0,0:15:06.04,0:15:07.75,Default,,0,0,0,,thần rời khỏi nước Cảnh\Ncũng mười mấy năm rồi,
Dialogue: 0,0:15:08.20,0:15:09.56,Default,,0,0,0,,sống đời phiêu bạt.
Dialogue: 0,0:15:10.23,0:15:11.28,Default,,0,0,0,,Thần dân nước Cảnh
Dialogue: 0,0:15:12.35,0:15:13.75,Default,,0,0,0,,chỉ công nhận Đàm Đài Minh Lãng.
Dialogue: 0,0:15:14.04,0:15:16.11,Default,,0,0,0,,Nước Cảnh không còn chỗ\Ncho thần dung thân.
Dialogue: 0,0:15:16.59,0:15:18.08,Default,,0,0,0,,Huống hồ mỗi người một mệnh.
Dialogue: 0,0:15:18.59,0:15:20.83,Default,,0,0,0,,Vương vị, thiên hạ,
Dialogue: 0,0:15:21.83,0:15:23.68,Default,,0,0,0,,những thứ này\Ncứ để người khác tranh giành đi.
Dialogue: 0,0:15:24.56,0:15:25.71,Default,,0,0,0,,Mệnh ta đã như thế,
Dialogue: 0,0:15:26.80,0:15:30.80,Default,,0,0,0,,có thể sống tạm bợ đã là phúc rồi.
Dialogue: 0,0:15:36.92,0:15:37.71,Default,,0,0,0,,Vậy là
Dialogue: 0,0:15:38.08,0:15:39.96,Default,,0,0,0,,trẫm đã uổng công vô ích rồi.
Dialogue: 0,0:15:40.71,0:15:41.47,Default,,0,0,0,,Ngươi về đi.
Dialogue: 0,0:15:53.23,0:15:55.35,Default,,0,0,0,,Người này lòng dạ sắt đá.
Dialogue: 0,0:15:55.40,0:15:57.63,Default,,0,0,0,,Mỗi lần trẫm gặp hắn\Nđều cảm thấy khó chịu.
Dialogue: 0,0:15:58.23,0:16:02.47,Default,,0,0,0,,Thảo nào lão già Đàm Đài\Nkhông thương tiếc gì hắn.
Dialogue: 0,0:16:03.51,0:16:06.28,Default,,0,0,0,,Nay hắn đã không chịu làm tay sai cho trẫm
Dialogue: 0,0:16:06.28,0:16:07.71,Default,,0,0,0,,[tức là kẻ bỏ đi.]
Dialogue: 0,0:16:08.44,0:16:10.63,Default,,0,0,0,,[Phái người theo sát hắn.]
Dialogue: 0,0:16:11.20,0:16:13.40,Default,,0,0,0,,[Giữ hắn lại\Nsuy cho cùng cũng là mầm họa.]
Dialogue: 0,0:16:14.20,0:16:17.28,Default,,0,0,0,,Chuyện trẫm nói lần trước\Ntranh thủ xử lý đi.
Dialogue: 0,0:16:17.44,0:16:18.83,Default,,0,0,0,,Rõ, bệ hạ.
Dialogue: 0,0:16:18.83,0:16:20.71,Default,,0,0,0,,Nô tài đã sắp xếp rồi.
Dialogue: 0,0:16:20.71,0:16:21.83,Default,,0,0,0,,Thận trọng chút.
Dialogue: 0,0:16:21.83,0:16:24.75,Default,,0,0,0,,Chuẩn bị một người tướng mạo,\Ntuổi tác tương đồng,
Dialogue: 0,0:16:25.04,0:16:26.47,Default,,0,0,0,,đừng để lộ sơ hở.
Dialogue: 0,0:16:26.83,0:16:30.20,Default,,0,0,0,,Tới lúc đó vừa có thể đánh đổ Diệp gia,
Dialogue: 0,0:16:31.35,0:16:32.87,Default,,0,0,0,,còn có thể quấy nhiễu nước Cảnh.
Dialogue: 0,0:16:33.04,0:16:34.32,Default,,0,0,0,,Bệ hạ anh minh.
Dialogue: 0,0:16:40.40,0:16:41.59,Default,,0,0,0,,Nhị tiểu thư, đến rồi.
Dialogue: 0,0:16:42.44,0:16:44.83,Default,,0,0,0,,Trước khi Đàm Đài điện hạ\Nđược đón đến Diệp gia
Dialogue: 0,0:16:45.08,0:16:46.51,Default,,0,0,0,,thì vẫn luôn ở đây.
Dialogue: 0,0:17:08.99,0:17:10.07,Default,,0,0,0,,Các ngươi muốn hại điện hạ.
Dialogue: 0,0:17:10.60,0:17:11.55,Default,,0,0,0,,Các ngươi muốn hại điện hạ.
Dialogue: 0,0:17:12.20,0:17:13.12,Default,,0,0,0,,Bọn họ muốn hại điện hạ.
Dialogue: 0,0:17:13.64,0:17:14.47,Default,,0,0,0,,Vị ma ma này,
Dialogue: 0,0:17:14.75,0:17:15.71,Default,,0,0,0,,trời lạnh như thế,
Dialogue: 0,0:17:16.12,0:17:17.40,Default,,0,0,0,,sao ma ma lại ngồi dưới đất?
Dialogue: 0,0:17:17.96,0:17:18.51,Default,,0,0,0,,Nhị tiểu thư,
Dialogue: 0,0:17:19.16,0:17:20.40,Default,,0,0,0,,đây là Oánh Tâm ma ma.
Dialogue: 0,0:17:20.60,0:17:21.96,Default,,0,0,0,,Nghe nói Đàm Đài điện hạ
Dialogue: 0,0:17:21.96,0:17:23.40,Default,,0,0,0,,được bà ấy nuôi lớn.
Dialogue: 0,0:17:23.79,0:17:25.07,Default,,0,0,0,,Bà ấy cũng đã đi theo Đàm Đài điện hạ
Dialogue: 0,0:17:25.07,0:17:26.55,Default,,0,0,0,,từ nước Cảnh tới đây.
Dialogue: 0,0:17:37.79,0:17:38.68,Default,,0,0,0,,Ngươi muốn hại điện hạ.
Dialogue: 0,0:17:39.16,0:17:40.20,Default,,0,0,0,,Ngươi muốn hại điện hạ.
Dialogue: 0,0:17:41.40,0:17:42.36,Default,,0,0,0,,Ngươi muốn hại điện hạ.
Dialogue: 0,0:17:43.96,0:17:46.07,Default,,0,0,0,,Là Đàm Đài Tẫn sao? Ai muốn hại hắn?
Dialogue: 0,0:17:47.44,0:17:48.55,Default,,0,0,0,,Ta không hại điện hạ.
Dialogue: 0,0:17:50.16,0:17:51.40,Default,,0,0,0,,Điện hạ, xin dừng bước.
Dialogue: 0,0:17:54.23,0:17:55.16,Default,,0,0,0,,Ngô tổng quản.
Dialogue: 0,0:17:56.20,0:17:58.79,Default,,0,0,0,,Vẫn chưa chúc mừng tân hôn\Ncủa Đàm Đài điện hạ.
Dialogue: 0,0:17:59.51,0:18:00.96,Default,,0,0,0,,Chúc mừng, chúc mừng.
Dialogue: 0,0:18:03.27,0:18:04.07,Default,,0,0,0,,Ngô tổng quản,
Dialogue: 0,0:18:04.40,0:18:06.96,Default,,0,0,0,,có gì ông cứ nói thẳng.
Dialogue: 0,0:18:08.79,0:18:09.55,Default,,0,0,0,,Nghe nói điện hạ
Dialogue: 0,0:18:09.55,0:18:11.79,Default,,0,0,0,,tuy đã cưới Tịch Vụ tiểu thư của Diệp gia,
Dialogue: 0,0:18:12.03,0:18:14.20,Default,,0,0,0,,nhưng ý trung nhân\Nlại là Băng Thường tiểu thư.
Dialogue: 0,0:18:14.84,0:18:16.27,Default,,0,0,0,,Mọi người đều biết
Dialogue: 0,0:18:16.27,0:18:18.40,Default,,0,0,0,,Băng Thường tiểu thư và lục điện hạ
Dialogue: 0,0:18:18.40,0:18:19.96,Default,,0,0,0,,tình đầu ý hợp.
Dialogue: 0,0:18:20.16,0:18:21.40,Default,,0,0,0,,Diệp đại tướng quân
Dialogue: 0,0:18:21.47,0:18:24.40,Default,,0,0,0,,và lục điện hạ cũng đã sớm có giao tình\Nnhư nhạc phụ với con rể.
Dialogue: 0,0:18:24.68,0:18:26.40,Default,,0,0,0,,Giờ ngài ở Diệp phủ,
Dialogue: 0,0:18:26.40,0:18:27.47,Default,,0,0,0,,sớm tối kề cận,
Dialogue: 0,0:18:27.64,0:18:30.16,Default,,0,0,0,,có thể giúp ta để tâm được không?
Dialogue: 0,0:18:32.07,0:18:33.23,Default,,0,0,0,,Để tâm thế nào?
Dialogue: 0,0:18:34.40,0:18:37.55,Default,,0,0,0,,Tất nhiên là để tâm chứng cứ\Nbọn họ câu kết rồi.
Dialogue: 0,0:18:41.16,0:18:41.84,Default,,0,0,0,,Câu kết?
Dialogue: 0,0:18:43.03,0:18:46.44,Default,,0,0,0,,Ông muốn ta giúp ông hãm hại\NTiêu Lẫm và Diệp Khiếu?
Dialogue: 0,0:18:46.96,0:18:48.44,Default,,0,0,0,,Xem ngài nói gì kìa.
Dialogue: 0,0:18:48.44,0:18:50.16,Default,,0,0,0,,Chúng ta là cận thần của bệ hạ,
Dialogue: 0,0:18:50.23,0:18:52.12,Default,,0,0,0,,tất nhiên phải san sẻ âu lo cho bệ hạ rồi.
Dialogue: 0,0:18:52.27,0:18:53.44,Default,,0,0,0,,Chỉ cần ngài chịu giúp,
Dialogue: 0,0:18:53.44,0:18:56.20,Default,,0,0,0,,sau này ta không chỉ bảo đảm\Nđiện hạ sống lâu trăm tuổi,
Dialogue: 0,0:18:56.20,0:18:58.99,Default,,0,0,0,,chưa biết chừng còn có thể giúp ngài\Nôm được mỹ nhân về nữa.
Dialogue: 0,0:19:00.64,0:19:01.99,Default,,0,0,0,,[Ở Thịnh Đô này,]
Dialogue: 0,0:19:02.31,0:19:04.60,Default,,0,0,0,,[e là chỉ Tiêu Lẫm\Nlà thật lòng đối đãi với ta.]
Dialogue: 0,0:19:05.20,0:19:07.27,Default,,0,0,0,,[Tuy rằng ta không đến mức\Nlo chuyện bao đồng của huynh ấy,]
Dialogue: 0,0:19:08.03,0:19:10.99,Default,,0,0,0,,[nhưng cũng không có lý do gì\Ngiúp kẻ này hại huynh ấy.]
Dialogue: 0,0:19:14.84,0:19:16.03,Default,,0,0,0,,Việc mà Ngô tổng quản nhờ
Dialogue: 0,0:19:16.51,0:19:17.99,Default,,0,0,0,,e là ta không giúp được rồi.
Dialogue: 0,0:19:18.16,0:19:20.12,Default,,0,0,0,,Ngài đừng rượu mời không uống\Nlại muốn uống rượu phạt.
Dialogue: 0,0:19:20.12,0:19:21.79,Default,,0,0,0,,Ngài đừng quên\Nkết cục của Nguyệt Oánh Tâm.
Dialogue: 0,0:19:23.40,0:19:24.51,Default,,0,0,0,,Tại sao bà ấy lại ra nông nỗi này?
Dialogue: 0,0:19:25.12,0:19:27.12,Default,,0,0,0,,Lãnh cung quanh năm không ai ngó ngàng.
Dialogue: 0,0:19:27.44,0:19:30.16,Default,,0,0,0,,Chúng ta cũng không biết Oánh Tâm này\Nbị điên từ bao giờ,
Dialogue: 0,0:19:30.40,0:19:31.55,Default,,0,0,0,,chỉ nghe nói
Dialogue: 0,0:19:31.55,0:19:33.75,Default,,0,0,0,,từ khi Đàm Đài điện hạ\Nxuất cung nhập phủ,
Dialogue: 0,0:19:33.75,0:19:35.51,Default,,0,0,0,,bà ấy vẫn luôn như thế này.
Dialogue: 0,0:19:36.40,0:19:37.51,Default,,0,0,0,,Ta không hại điện hạ.
Dialogue: 0,0:19:38.12,0:19:39.27,Default,,0,0,0,,Ta không hại điện hạ.
Dialogue: 0,0:19:39.55,0:19:40.20,Default,,0,0,0,,Không phải ta.
Dialogue: 0,0:19:40.20,0:19:41.64,Default,,0,0,0,,Không phải, không phải ta hại điện hạ.
Dialogue: 0,0:19:41.64,0:19:42.51,Default,,0,0,0,,Ta không hại điện hạ.
Dialogue: 0,0:19:46.40,0:19:47.71,Default,,0,0,0,,Ngài đừng quên
Dialogue: 0,0:19:48.20,0:19:49.96,Default,,0,0,0,,đây là nơi nào.
Dialogue: 0,0:19:49.96,0:19:52.36,Default,,0,0,0,,Đừng quên tính mạng của cô ta\Nnằm trong tay ta.
Dialogue: 0,0:19:53.07,0:19:54.44,Default,,0,0,0,,Là sống hay chết
Dialogue: 0,0:19:54.84,0:19:56.60,Default,,0,0,0,,do ta quyết định.
Dialogue: 0,0:19:56.99,0:19:58.79,Default,,0,0,0,,Ngài đừng tưởng bây giờ ngài ở Diệp gia
Dialogue: 0,0:19:59.20,0:20:00.55,Default,,0,0,0,,làm cậu con rể biết vâng lời
Dialogue: 0,0:20:00.55,0:20:01.68,Default,,0,0,0,,nhưng không được ngồi chung mâm
Dialogue: 0,0:20:01.68,0:20:02.84,Default,,0,0,0,,là có thể bình an vô sự.
Dialogue: 0,0:20:03.23,0:20:05.68,Default,,0,0,0,,Nếu ngài không nghe lời\Nthì ta sẽ giết Oánh Tâm.
Dialogue: 0,0:20:06.75,0:20:08.84,Default,,0,0,0,,Nhưng ta sẽ không để cô ta
Dialogue: 0,0:20:08.84,0:20:10.55,Default,,0,0,0,,chết nhẹ nhõm như vậy.
Dialogue: 0,0:20:13.92,0:20:14.96,Default,,0,0,0,,Ta vốn tưởng rằng
Dialogue: 0,0:20:16.27,0:20:18.84,Default,,0,0,0,,ông chẳng qua chỉ là\Ncon chó của Tiêu Lương,
Dialogue: 0,0:20:19.47,0:20:20.64,Default,,0,0,0,,nhưng không ngờ
Dialogue: 0,0:20:21.20,0:20:22.68,Default,,0,0,0,,lại là con chó lắm lời.
Dialogue: 0,0:20:24.96,0:20:25.96,Default,,0,0,0,,Đàm Đài Tẫn, ngươi…
Dialogue: 0,0:20:27.92,0:20:29.12,Default,,0,0,0,,Điện hạ cho gọi ngài.
Dialogue: 0,0:20:31.16,0:20:31.96,Default,,0,0,0,,Ta về ngay.
Dialogue: 0,0:20:33.92,0:20:35.03,Default,,0,0,0,,Con tin Đàm Đài,
Dialogue: 0,0:20:35.60,0:20:37.84,Default,,0,0,0,,chuyện chúng ta nói vừa rồi…
Dialogue: 0,0:20:39.96,0:20:41.12,Default,,0,0,0,,Vừa rồi Ngô tổng quản
Dialogue: 0,0:20:41.64,0:20:43.36,Default,,0,0,0,,chỉ hàn huyên chuyện cũ với ta thôi.
Dialogue: 0,0:20:45.47,0:20:47.47,Default,,0,0,0,,Xem ra có tiến bộ đấy.
Dialogue: 0,0:20:47.60,0:20:49.12,Default,,0,0,0,,Được, ngươi nghe đây.
Dialogue: 0,0:20:49.68,0:20:50.36,Default,,0,0,0,,Nếu ngươi dám
Dialogue: 0,0:20:50.36,0:20:52.68,Default,,0,0,0,,tiết lộ lời ta vừa nói,
Dialogue: 0,0:20:53.07,0:20:55.55,Default,,0,0,0,,ta sẽ khiến ngươi sống không bằng chết.
Dialogue: 0,0:20:58.68,0:20:59.96,Default,,0,0,0,,Nghiệt chủng của tiện nhân.
Dialogue: 0,0:21:07.23,0:21:10.31,Default,,0,0,0,,[Ngô tổng quản này đúng là nhiều lời.]
Dialogue: 0,0:21:18.03,0:21:19.12,Default,,0,0,0,,Đàm Đài Tẫn này
Dialogue: 0,0:21:19.36,0:21:20.64,Default,,0,0,0,,đúng là không biết tốt xấu.
Dialogue: 0,0:21:21.47,0:21:22.44,Default,,0,0,0,,Cha nuôi,
Dialogue: 0,0:21:22.60,0:21:24.07,Default,,0,0,0,,cha đừng nổi giận kẻo hại sức khỏe.
Dialogue: 0,0:21:24.96,0:21:26.36,Default,,0,0,0,,Người mà cha sai con chuẩn bị
Dialogue: 0,0:21:26.36,0:21:27.55,Default,,0,0,0,,đã tìm được rồi.
Dialogue: 0,0:21:27.99,0:21:28.92,Default,,0,0,0,,Đối phó với đám người nước Cảnh
Dialogue: 0,0:21:28.92,0:21:30.03,Default,,0,0,0,,chắc chắn có thể biến giả thành thật.
Dialogue: 0,0:21:31.12,0:21:31.88,Default,,0,0,0,,Không được.
Dialogue: 0,0:21:31.88,0:21:33.71,Default,,0,0,0,,Lúc nãy đã nói với hắn\Nquá nhiều bí mật rồi.
Dialogue: 0,0:21:33.92,0:21:35.23,Default,,0,0,0,,Người này không làm việc cho ta
Dialogue: 0,0:21:35.51,0:21:36.92,Default,,0,0,0,,thì quyết không thể giữ lại.
Dialogue: 0,0:21:36.92,0:21:38.75,Default,,0,0,0,,Tối nay hãy giết Đàm Đài Tẫn đi.
Dialogue: 0,0:21:38.75,0:21:39.71,Default,,0,0,0,,Hắn không nghe lời
Dialogue: 0,0:21:39.71,0:21:42.71,Default,,0,0,0,,thì chúng ta đổi kẻ khác nghe lời hơn.
Dialogue: 0,0:21:47.84,0:21:48.31,Default,,0,0,0,,Cha nuôi.
Dialogue: 0,0:21:49.07,0:21:49.71,Default,,0,0,0,,Cha nuôi.
Dialogue: 0,0:21:52.27,0:21:52.92,Default,,0,0,0,,Cha nuôi.
Dialogue: 0,0:22:01.03,0:22:02.88,Default,,0,0,0,,Chết rồi… Chết người rồi.
Dialogue: 0,0:22:03.64,0:22:04.36,Default,,0,0,0,,Chết người rồi!
Dialogue: 0,0:22:08.51,0:22:09.27,Default,,0,0,0,,Lẫm Nhi,
Dialogue: 0,0:22:09.71,0:22:12.75,Default,,0,0,0,,con nói hôm nay có chuyện quan trọng\Nmuốn bàn với trẫm,
Dialogue: 0,0:22:13.44,0:22:14.96,Default,,0,0,0,,rốt cuộc là chuyện gì?
Dialogue: 0,0:22:16.20,0:22:17.07,Default,,0,0,0,,Khởi bẩm phụ vương,
Dialogue: 0,0:22:17.36,0:22:18.55,Default,,0,0,0,,gần đây có rất nhiều người dân
Dialogue: 0,0:22:18.55,0:22:20.03,Default,,0,0,0,,vô cớ mất tích khi đang ngủ say.
Dialogue: 0,0:22:20.44,0:22:22.51,Default,,0,0,0,,Nhi thần nghi ngờ\Ncó yêu quái lẻn vào Thịnh Đô.
Dialogue: 0,0:22:23.12,0:22:24.23,Default,,0,0,0,,Nhi thần nhận được bẩm báo
Dialogue: 0,0:22:24.23,0:22:25.55,Default,,0,0,0,,liền lập tức lệnh cho Trần Hiền\Ndẫn theo Tiềm Long Vệ
Dialogue: 0,0:22:25.55,0:22:26.79,Default,,0,0,0,,truy tìm người dân mất tích.
Dialogue: 0,0:22:27.20,0:22:29.12,Default,,0,0,0,,Trong ngoài kinh thành\Ncũng bố trí đi tuần ngày đêm,
Dialogue: 0,0:22:29.12,0:22:29.99,Default,,0,0,0,,đề phòng yêu quái.
Dialogue: 0,0:22:30.44,0:22:31.96,Default,,0,0,0,,Phụ vương ở trong cung cũng phải cẩn thận,
Dialogue: 0,0:22:31.96,0:22:33.12,Default,,0,0,0,,đề phòng yêu quái làm loạn.
Dialogue: 0,0:22:34.44,0:22:36.40,Default,,0,0,0,,Trong đám vương tôn công tử
Dialogue: 0,0:22:36.40,0:22:37.79,Default,,0,0,0,,mà nước ta đưa lên núi Bất Chiếu,
Dialogue: 0,0:22:37.79,0:22:39.71,Default,,0,0,0,,chỉ có con là thiên phú tốt nhất,
Dialogue: 0,0:22:39.71,0:22:41.44,Default,,0,0,0,,tốc độ tu hành cũng nhanh,
Dialogue: 0,0:22:41.44,0:22:43.79,Default,,0,0,0,,chỉ trong ba năm đã có tiến bộ vượt bậc.
Dialogue: 0,0:22:44.23,0:22:46.64,Default,,0,0,0,,Nhưng đối phó với yêu quái kiểu này,
Dialogue: 0,0:22:46.84,0:22:48.47,Default,,0,0,0,,chỉ dựa vào ba năm tu vi
Dialogue: 0,0:22:48.75,0:22:50.64,Default,,0,0,0,,e là chưa đủ để nắm chắc phần thắng.
Dialogue: 0,0:22:51.60,0:22:52.44,Default,,0,0,0,,Nhi thần hổ thẹn.
Dialogue: 0,0:22:52.75,0:22:53.47,Default,,0,0,0,,Không sao.
Dialogue: 0,0:22:54.51,0:22:56.07,Default,,0,0,0,,Ở chỗ ta vừa hay có một người
Dialogue: 0,0:22:56.23,0:22:57.71,Default,,0,0,0,,con có thể dùng được.
Dialogue: 0,0:23:04.96,0:23:06.71,Default,,0,0,0,,Lục điện hạ vẫn khỏe chứ?
Dialogue: 0,0:23:07.47,0:23:08.36,Default,,0,0,0,,Tiểu sư thúc.
Dialogue: 0,0:23:09.71,0:23:12.23,Default,,0,0,0,,Nói vậy là sư phụ phái thúc đến Thịnh Đô?
Dialogue: 0,0:23:13.12,0:23:14.44,Default,,0,0,0,,Sư huynh đã nói rồi,
Dialogue: 0,0:23:14.75,0:23:17.44,Default,,0,0,0,,cơ duyên kiếp này của ta ở Thịnh Đô,
Dialogue: 0,0:23:17.84,0:23:19.64,Default,,0,0,0,,bảo ta đến đây tu luyện vài năm\Nrồi hẵng về núi.
Dialogue: 0,0:23:22.51,0:23:23.47,Default,,0,0,0,,Cơ duyên gì vậy?
Dialogue: 0,0:23:23.79,0:23:25.99,Default,,0,0,0,,Cái này thì ta không biết.
Dialogue: 0,0:23:26.44,0:23:28.75,Default,,0,0,0,,Nhưng đến rồi\Nthì kiểu gì cũng có đất dụng võ.
Dialogue: 0,0:23:29.03,0:23:30.40,Default,,0,0,0,,Gần đây kết giới Hoang Uyên lỏng lẻo,
Dialogue: 0,0:23:30.40,0:23:32.55,Default,,0,0,0,,thường xuyên có yêu ma\Ntrà trộn vào nhân gian làm loạn.
Dialogue: 0,0:23:32.96,0:23:33.71,Default,,0,0,0,,Con cũng biết
Dialogue: 0,0:23:34.07,0:23:35.20,Default,,0,0,0,,Tiêu Dao Tông chúng ta
Dialogue: 0,0:23:35.20,0:23:36.96,Default,,0,0,0,,trước giờ rất thích lo chuyện bao đồng.
Dialogue: 0,0:23:38.07,0:23:39.23,Default,,0,0,0,,Đây không phải là chuyện bao đồng,
Dialogue: 0,0:23:39.71,0:23:41.47,Default,,0,0,0,,mà là việc lớn\Nliên quan đến tính mạng dân chúng.
Dialogue: 0,0:23:41.79,0:23:43.55,Default,,0,0,0,,Phụ vương đã phong thúc\Nlàm thái thường bác học,
Dialogue: 0,0:23:43.75,0:23:44.60,Default,,0,0,0,,thúc làm quan
Dialogue: 0,0:23:44.75,0:23:46.44,Default,,0,0,0,,thì phải bảo vệ dân chúng.
Dialogue: 0,0:23:47.12,0:23:48.60,Default,,0,0,0,,Hiện giờ đúng lúc yêu ma tác quái,
Dialogue: 0,0:23:48.84,0:23:51.03,Default,,0,0,0,,mong tiểu sư thúc giúp ta\Nnhanh chóng dẹp loạn.
Dialogue: 0,0:23:51.96,0:23:53.60,Default,,0,0,0,,Sông có khúc, người có lúc.
Dialogue: 0,0:23:54.16,0:23:55.99,Default,,0,0,0,,Ở núi Bất Chiếu, ta là sư thúc của con.
Dialogue: 0,0:23:56.44,0:23:57.36,Default,,0,0,0,,Đến nước Thịnh
Dialogue: 0,0:23:57.51,0:23:59.31,Default,,0,0,0,,lại chỉ có thể làm hạ quan của con.
Dialogue: 0,0:24:00.03,0:24:02.44,Default,,0,0,0,,Nhưng bổng lộc của quan viên nước Thịnh
Dialogue: 0,0:24:02.60,0:24:03.96,Default,,0,0,0,,cũng bèo bọt thật đấy,
Dialogue: 0,0:24:04.31,0:24:05.44,Default,,0,0,0,,còn chẳng đủ nuôi sống bản thân ta,
Dialogue: 0,0:24:05.44,0:24:07.31,Default,,0,0,0,,huống hồ ta còn già trẻ lớn bé nữa.
Dialogue: 0,0:24:13.12,0:24:13.79,Default,,0,0,0,,Tiểu sư thúc,
Dialogue: 0,0:24:14.27,0:24:15.12,Default,,0,0,0,,thúc lại nhặt mèo à?
Dialogue: 0,0:24:16.12,0:24:17.47,Default,,0,0,0,,Đúng là con hiểu ta.
Dialogue: 0,0:24:30.55,0:24:32.79,Default,,0,0,0,,[Tiểu Ma Thần ở trong cung\Nsống không tốt,]
Dialogue: 0,0:24:34.88,0:24:37.64,Default,,0,0,0,,[cho nên hắn mới bi quan,\Ntuyệt vọng như thế.]
Dialogue: 0,0:24:38.47,0:24:40.36,Default,,0,0,0,,[Tà cốt tập hợp sức mạnh\Nbằng cách hấp thụ]
Dialogue: 0,0:24:40.36,0:24:41.27,Default,,0,0,0,,[oán hận và đau khổ,]
Dialogue: 0,0:24:42.40,0:24:44.40,Default,,0,0,0,,[Đàm Đài Tẫn mới chịu\Nnhiều cay đắng như thế.]
Dialogue: 0,0:24:45.12,0:24:46.79,Default,,0,0,0,,[Đây chính là vận mệnh của ma thai sao?]
Dialogue: 0,0:24:53.31,0:24:54.03,Default,,0,0,0,,Con gái.
Dialogue: 0,0:24:56.44,0:24:57.31,Default,,0,0,0,,Muộn thế này rồi,
Dialogue: 0,0:24:57.31,0:24:58.71,Default,,0,0,0,,sao còn ở ngoài hóng gió?
Dialogue: 0,0:24:58.88,0:24:59.68,Default,,0,0,0,,Lạnh lắm.
Dialogue: 0,0:25:00.07,0:25:01.47,Default,,0,0,0,,Sao cha về muộn thế?
Dialogue: 0,0:25:02.12,0:25:02.99,Default,,0,0,0,,Vất vả quá.
Dialogue: 0,0:25:03.99,0:25:05.12,Default,,0,0,0,,Biết thương xót cha,
Dialogue: 0,0:25:05.71,0:25:06.88,Default,,0,0,0,,con đúng là trưởng thành thật rồi.
Dialogue: 0,0:25:09.03,0:25:09.51,Default,,0,0,0,,Đúng rồi.
Dialogue: 0,0:25:10.20,0:25:11.27,Default,,0,0,0,,Dạo này không có việc gì
Dialogue: 0,0:25:11.68,0:25:12.75,Default,,0,0,0,,thì đừng ra ngoài đi lung tung.
Dialogue: 0,0:25:13.20,0:25:13.96,Default,,0,0,0,,Sao thế ạ?
Dialogue: 0,0:25:14.12,0:25:15.71,Default,,0,0,0,,Trong ngoài đô thành\Nđều không mấy bình yên.
Dialogue: 0,0:25:16.31,0:25:18.07,Default,,0,0,0,,Có người dân mất tích khi đang ngủ,
Dialogue: 0,0:25:18.88,0:25:21.40,Default,,0,0,0,,hình như là yêu ma đang tác quái.
Dialogue: 0,0:25:21.71,0:25:23.79,Default,,0,0,0,,Hôm nay trong cung\Ncòn xảy ra một chuyện lạ.
Dialogue: 0,0:25:23.79,0:25:26.07,Default,,0,0,0,,Ngô tổng quản đi theo bệ hạ nhiều năm\Ngặp chuyện rồi.
Dialogue: 0,0:25:27.12,0:25:29.07,Default,,0,0,0,,Ông ta và Đàm Đài Tẫn nói chuyện mấy câu,
Dialogue: 0,0:25:29.23,0:25:30.84,Default,,0,0,0,,sau khi quay về thì lăn ra chết.
Dialogue: 0,0:25:31.12,0:25:32.31,Default,,0,0,0,,Lỗ tai chảy máu,
Dialogue: 0,0:25:32.31,0:25:33.84,Default,,0,0,0,,cái chết rất kỳ lạ,
Dialogue: 0,0:25:34.20,0:25:35.99,Default,,0,0,0,,còn có một con ong bò ra khỏi lỗ tai.
Dialogue: 0,0:25:36.84,0:25:37.55,Default,,0,0,0,,[Ong?]
Dialogue: 0,0:25:37.55,0:25:39.12,Default,,0,0,0,,[Hắn nói chuyện với chim?]
Dialogue: 0,0:25:39.12,0:25:41.12,Default,,0,0,0,,[Đúng thế, còn cả ruồi muỗi nữa.]
Dialogue: 0,0:25:41.12,0:25:42.40,Default,,0,0,0,,[Họ còn nói chuyện một lúc.]
Dialogue: 0,0:25:43.44,0:25:44.75,Default,,0,0,0,,Không nói nhiều với con nữa,
Dialogue: 0,0:25:45.07,0:25:47.51,Default,,0,0,0,,nếu không con gái yêu của ta\Nlại ngủ không ngon.
Dialogue: 0,0:25:48.07,0:25:49.03,Default,,0,0,0,,Nghỉ sớm đi.
Dialogue: 0,0:25:54.47,0:25:57.51,Default,,0,0,0,,Tiểu thư, trên đời này\Ncó yêu quái thật sao?
Dialogue: 0,0:26:00.12,0:26:01.03,Default,,0,0,0,,Không chỉ có yêu
Dialogue: 0,0:26:02.27,0:26:03.12,Default,,0,0,0,,mà còn có ma.
Dialogue: 0,0:26:14.36,0:26:17.79,Default,,0,0,0,,[Dù đã rời khỏi hoàng cung,\Ntrốn đến Diệp phủ,]
Dialogue: 0,0:26:19.03,0:26:20.84,Default,,0,0,0,,[bọn họ vẫn không chịu buông tha cho ta.]
Dialogue: 0,0:26:25.60,0:26:27.84,Default,,0,0,0,,[Ta phải nghĩ cách trốn khỏi nước Thịnh.]
Dialogue: 0,0:26:32.03,0:26:32.79,Default,,0,0,0,,Ngô tổng quản,
Dialogue: 0,0:26:34.12,0:26:35.44,Default,,0,0,0,,ông sống đủ lâu rồi.
Dialogue: 0,0:26:37.44,0:26:38.12,Default,,0,0,0,,Đi đi.
Dialogue: 0,0:26:42.40,0:26:43.92,Default,,0,0,0,,[Với năng lực hiện giờ của ta,]
Dialogue: 0,0:26:44.27,0:26:47.47,Default,,0,0,0,,[khống chế một hai con chim, con cá,\Ncôn trùng đã là cực hạn rồi.]
Dialogue: 0,0:26:48.71,0:26:50.88,Default,,0,0,0,,[Lần này miễn cưỡng\Ncó thể gặp dữ hoá lành,]
Dialogue: 0,0:26:51.55,0:26:55.07,Default,,0,0,0,,[lần sau e là càng khó tự bảo vệ mình.]
Dialogue: 0,0:27:03.03,0:27:04.20,Default,,0,0,0,,[Như thế nào mới là thức tỉnh?]
Dialogue: 0,0:27:04.71,0:27:06.27,Default,,0,0,0,,[Tiểu Ma Thần hiện giờ\Nkhông có năng lực gì.]
Dialogue: 0,0:27:06.27,0:27:07.40,Default,,0,0,0,,[Nếu là do hắn làm,]
Dialogue: 0,0:27:07.40,0:27:09.27,Default,,0,0,0,,[nhất định là vật khác\Nnhư pháp khí, bùa chú gì đó.]
Dialogue: 0,0:27:09.44,0:27:10.71,Default,,0,0,0,,[Nếu đã muốn giết người]
Dialogue: 0,0:27:10.96,0:27:12.40,Default,,0,0,0,,[thì chắc chắn sẽ để lại sơ hở.]
Dialogue: 0,0:27:13.92,0:27:15.55,Default,,0,0,0,,Nhị tiểu thư, nhị tiểu thư.
Dialogue: 0,0:27:18.23,0:27:19.92,Default,,0,0,0,,[Không có gì cả.]
Dialogue: 0,0:27:22.55,0:27:24.03,Default,,0,0,0,,Nhị tiểu thư có gì bất mãn?
Dialogue: 0,0:27:24.20,0:27:25.99,Default,,0,0,0,,[Không được, ta vẫn phải lừa hắn tiếp.]
Dialogue: 0,0:27:27.31,0:27:29.31,Default,,0,0,0,,Hôm nay Ngô tổng quản trong cung đột tử.
Dialogue: 0,0:27:29.71,0:27:30.40,Default,,0,0,0,,Ngươi có biết không?
Dialogue: 0,0:27:34.44,0:27:36.47,Default,,0,0,0,,Ta nghe nói trước khi ngươi rời cung
Dialogue: 0,0:27:36.47,0:27:37.40,Default,,0,0,0,,đã bị ông ấy chặn lại.
Dialogue: 0,0:27:37.79,0:27:38.84,Default,,0,0,0,,Ông ấy đã nói gì với ngươi?
Dialogue: 0,0:27:40.88,0:27:41.55,Default,,0,0,0,,Không có gì.
Dialogue: 0,0:27:43.36,0:27:44.84,Default,,0,0,0,,[Bình tĩnh như thế,]
Dialogue: 0,0:27:45.12,0:27:46.23,Default,,0,0,0,,[lẽ nào không làm thật?]
Dialogue: 0,0:27:49.96,0:27:50.88,Default,,0,0,0,,Từ nay trở đi,
Dialogue: 0,0:27:51.23,0:27:53.12,Default,,0,0,0,,mỗi ngày trước khi đi ngủ\Nta phải khám người ngươi.
Dialogue: 0,0:27:55.12,0:27:55.99,Default,,0,0,0,,Ta nhắc nhở ngươi,
Dialogue: 0,0:27:56.40,0:27:58.31,Default,,0,0,0,,đừng có ngấm ngầm giả thần giả quỷ.
Dialogue: 0,0:28:00.31,0:28:01.99,Default,,0,0,0,,Sở thích của nhị tiểu thư hiện giờ
Dialogue: 0,0:28:02.44,0:28:03.92,Default,,0,0,0,,đúng là càng ngày càng thú vị.
Dialogue: 0,0:28:03.92,0:28:04.96,Default,,0,0,0,,Không cần ngươi lo.
Dialogue: 0,0:28:05.44,0:28:07.55,Default,,0,0,0,,Ai biết được ngươi có âm mưu
Dialogue: 0,0:28:07.55,0:28:09.23,Default,,0,0,0,,huấn luyện đám ong với côn trùng
Dialogue: 0,0:28:09.23,0:28:10.23,Default,,0,0,0,,làm vật thế mạng thay ngươi hay không.
Dialogue: 0,0:28:10.47,0:28:12.23,Default,,0,0,0,,Ta không muốn như Ngô tổng quản,
Dialogue: 0,0:28:12.40,0:28:14.03,Default,,0,0,0,,vô duyên vô cớ bỏ mạng.
Dialogue: 0,0:28:17.71,0:28:19.55,Default,,0,0,0,,[Rốt cuộc làm sao cô ta phát hiện ra?]
Dialogue: 0,0:28:21.79,0:28:22.75,Default,,0,0,0,,Như vậy xem ra
Dialogue: 0,0:28:23.07,0:28:24.71,Default,,0,0,0,,khám người cũng chưa đủ bảo đảm,
Dialogue: 0,0:28:25.36,0:28:26.03,Default,,0,0,0,,chi bằng
Dialogue: 0,0:28:28.23,0:28:29.40,Default,,0,0,0,,ta cởi hết ra
Dialogue: 0,0:28:30.03,0:28:31.55,Default,,0,0,0,,để nhị tiểu thư an tâm?
Dialogue: 0,0:28:32.96,0:28:33.68,Default,,0,0,0,,Ngươi cởi đi.
Dialogue: 0,0:28:34.07,0:28:35.07,Default,,0,0,0,,Ta đâu có chịu thiệt.
Dialogue: 0,0:28:35.44,0:28:36.79,Default,,0,0,0,,Một ngày phu thê, trăm ngày ân nghĩa.
Dialogue: 0,0:28:36.79,0:28:37.79,Default,,0,0,0,,Có gì là ta chưa thấy đâu.
Dialogue: 0,0:28:46.79,0:28:47.68,Default,,0,0,0,,Ngươi cởi đi.
Dialogue: 0,0:28:53.16,0:28:53.79,Default,,0,0,0,,Không cởi nữa à?
Dialogue: 0,0:28:54.16,0:28:55.03,Default,,0,0,0,,Hay là ta cởi nhé.
Dialogue: 0,0:29:01.79,0:29:03.79,Default,,0,0,0,,[Sao cô ta trở nên\Nthông minh hơn nhiều như vậy?]
Dialogue: 0,0:29:18.12,0:29:22.16,Default,,0,0,0,,Tiết trời hanh khô, cẩn thận củi lửa.
Dialogue: 0,0:29:23.79,0:29:28.12,Default,,0,0,0,,Tiết trời hanh khô, cẩn thận củi lửa.
Dialogue: 0,0:29:29.99,0:29:34.68,Default,,0,0,0,,Tiết trời hanh khô, cẩn thận củi lửa.
Dialogue: 0,0:29:38.92,0:29:41.27,Default,,0,0,0,,[Không cam tâm, oán hận,]
Dialogue: 0,0:29:42.40,0:29:44.99,Default,,0,0,0,,[sợ hãi, hối hận.]
Dialogue: 0,0:29:47.12,0:29:48.75,Default,,0,0,0,,[Chính là ngươi rồi.]
Dialogue: 0,0:29:49.92,0:29:51.16,Default,,0,0,0,,Cứu với!
Dialogue: 0,0:29:55.54,0:30:02.74,Default,,0,0,0,,[Đông Đô Môn]
Dialogue: 0,0:30:08.44,0:30:09.31,Default,,0,0,0,,[Quả nhiên]
Dialogue: 0,0:30:10.12,0:30:11.99,Default,,0,0,0,,[trên đời này không có nơi nào]
Dialogue: 0,0:30:12.79,0:30:15.79,Default,,0,0,0,,[nhiều ác mộng như chốn thâm cung.]
Dialogue: 0,0:30:17.79,0:30:19.84,Default,,0,0,0,,[Có dưỡng chất của những cơn ác mộng này,]
Dialogue: 0,0:30:20.36,0:30:23.40,Default,,0,0,0,,[ta có thể tạo ra nhiều Yểm Chi Hoa hơn.]
Dialogue: 0,0:30:27.71,0:30:29.31,Default,,0,0,0,,Có nhiều chỉ đỏ hơn người thường.
Dialogue: 0,0:30:30.60,0:30:33.47,Default,,0,0,0,,[Xem ra ngươi đúng là người số khổ.]
Dialogue: 0,0:30:34.40,0:30:37.36,Default,,0,0,0,,[Chi bằng theo ta rời khỏi đây đi.]
Dialogue: 0,0:30:40.68,0:30:42.68,Default,,0,0,0,,[Hình như còn có hơi thở khác.]
Dialogue: 0,0:30:43.36,0:30:45.03,Default,,0,0,0,,[Không ngờ lại ở ngay ngoài cung.]
Dialogue: 0,0:30:46.60,0:30:47.99,Default,,0,0,0,,[Dù sao trời còn chưa sáng,]
Dialogue: 0,0:30:48.16,0:30:49.44,Default,,0,0,0,,[hay là đi xem thế nào.]
Dialogue: 0,0:30:58.75,0:30:59.68,Default,,0,0,0,,[Ở ngay đây.]
Dialogue: 0,0:31:00.31,0:31:01.60,Default,,0,0,0,,[Quả nhiên không uổng công chuyến này,]
Dialogue: 0,0:31:03.40,0:31:06.36,Default,,0,0,0,,[hơi thở rất đặc biệt.]
Dialogue: 0,0:31:09.44,0:31:11.99,Default,,0,0,0,,Vốn là của ta.
Dialogue: 0,0:31:13.63,0:31:14.52,Default,,0,0,0,,Điện hạ đừng đi.
Dialogue: 0,0:31:14.92,0:31:15.98,Default,,0,0,0,,[Tiểu mỹ nhân.]
Dialogue: 0,0:31:16.97,0:31:18.58,Default,,0,0,0,,[Rõ ràng ngươi là người,]
Dialogue: 0,0:31:20.71,0:31:22.75,Default,,0,0,0,,[nhưng trên người lại có vật của yêu ma.]
Dialogue: 0,0:31:23.68,0:31:25.31,Default,,0,0,0,,[Đúng là rất thú vị.]
Dialogue: 0,0:31:26.51,0:31:29.27,Default,,0,0,0,,Xem ra tối nay bội thu rồi.
Dialogue: 0,0:31:30.03,0:31:31.79,Default,,0,0,0,,Ngươi cũng theo ta về đi.
Dialogue: 0,0:32:04.55,0:32:07.55,Default,,0,0,0,,[Có dưỡng chất\Ncủa những người số khổ này,]
Dialogue: 0,0:32:09.71,0:32:12.40,Default,,0,0,0,,Yểm Chi Hoa sẽ nhanh chóng mọc khắp nơi.
Dialogue: 0,0:32:16.47,0:32:18.92,Default,,0,0,0,,[Chỉ cần cánh rừng này\Nnở đầy Yểm Chi Hoa,]
Dialogue: 0,0:32:19.47,0:32:21.79,Default,,0,0,0,,[ta có thể hóa yêu thành ma rồi.]
Dialogue: 0,0:32:24.62,0:32:27.90,Default,,0,0,0,,[Diệp Phủ]
Dialogue: 0,0:32:30.96,0:32:33.51,Default,,0,0,0,,[Trong kinh thành có yêu quái,]
Dialogue: 0,0:32:34.84,0:32:36.60,Default,,0,0,0,,[Ngô tổng quản đột tử,]
Dialogue: 0,0:32:37.92,0:32:40.64,Default,,0,0,0,,[rốt cuộc có liên quan đến\NTiểu Ma Thần không?]
Dialogue: 0,0:32:46.07,0:32:47.16,Default,,0,0,0,,Nhìn gì mà nhìn.
Dialogue: 0,0:32:47.51,0:32:48.68,Default,,0,0,0,,Không được để thừa cái nào.
Dialogue: 0,0:32:48.96,0:32:49.84,Default,,0,0,0,,Ăn hết cho ta.
Dialogue: 0,0:32:53.84,0:32:54.60,Default,,0,0,0,,Diệp Tịch Vụ,
Dialogue: 0,0:32:54.88,0:32:56.40,Default,,0,0,0,,cô đúng là lắm trò.
Dialogue: 0,0:32:57.44,0:32:58.12,Default,,0,0,0,,Phải.
Dialogue: 0,0:32:58.60,0:33:00.96,Default,,0,0,0,,Dạo này ta rất thích nhìn người khác ăn.
Dialogue: 0,0:33:01.23,0:33:01.96,Default,,0,0,0,,Sao nào?
Dialogue: 0,0:33:03.23,0:33:04.12,Default,,0,0,0,,Đến cuối tháng,
Dialogue: 0,0:33:04.20,0:33:05.64,Default,,0,0,0,,nếu ngươi không tăng được một cân rưỡi
Dialogue: 0,0:33:05.64,0:33:06.79,Default,,0,0,0,,thì cứ đợi ăn đòn đi.
Dialogue: 0,0:33:09.55,0:33:11.68,Default,,0,0,0,,[Cô ta đúng là biến thái\Nđến mức khó đoán.]
Dialogue: 0,0:33:13.51,0:33:14.16,Default,,0,0,0,,Tiểu thư.
Dialogue: 0,0:33:14.96,0:33:15.51,Default,,0,0,0,,Tiểu thư.
Dialogue: 0,0:33:16.23,0:33:18.23,Default,,0,0,0,,Không hay rồi, đại tiểu thư mất tích rồi.
Dialogue: 0,0:33:18.51,0:33:19.12,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:33:19.12,0:33:20.51,Default,,0,0,0,,Họ nói là tối qua vẫn còn bình thường,
Dialogue: 0,0:33:20.84,0:33:22.55,Default,,0,0,0,,ai ngờ sáng nay đã không thấy đâu.
Dialogue: 0,0:33:22.79,0:33:24.16,Default,,0,0,0,,E là… E là…
Dialogue: 0,0:33:24.40,0:33:26.23,Default,,0,0,0,,là yêu quái
Dialogue: 0,0:33:26.23,0:33:27.23,Default,,0,0,0,,mà lão gia nói đến hôm qua.
Dialogue: 0,0:33:27.23,0:33:28.27,Default,,0,0,0,,Phải làm thế nào đây?
Dialogue: 0,0:33:29.36,0:33:30.55,Default,,0,0,0,,Em đừng cuống, từ từ nói.
Dialogue: 0,0:33:30.55,0:33:32.23,Default,,0,0,0,,Tướng quân đã mời thái thường bác học
Dialogue: 0,0:33:32.23,0:33:33.55,Default,,0,0,0,,đến phủ đuổi yêu trừ ma,
Dialogue: 0,0:33:33.55,0:33:35.03,Default,,0,0,0,,nói là lục điện hạ cũng đến rồi.
Dialogue: 0,0:33:35.40,0:33:36.20,Default,,0,0,0,,Ta đi xem thế nào.
Dialogue: 0,0:33:38.51,0:33:40.40,Default,,0,0,0,,[Chỉ có hứng thú với Tiêu Lẫm\Nlà không đổi.]
Dialogue: 0,0:33:40.51,0:33:41.20,Default,,0,0,0,,[Cũng tốt,]
Dialogue: 0,0:33:41.20,0:33:42.40,Default,,0,0,0,,[như thế thì chuyện của Ngô tổng quản]
Dialogue: 0,0:33:42.40,0:33:43.84,Default,,0,0,0,,[sẽ không ai để ý nữa.]
Dialogue: 0,0:33:54.47,0:33:55.23,Default,,0,0,0,,Lưu quản gia,
Dialogue: 0,0:33:55.44,0:33:57.23,Default,,0,0,0,,đưa Gia Hủy đi nghỉ ngơi đi.
Dialogue: 0,0:33:57.79,0:33:58.23,Default,,0,0,0,,Vâng.
Dialogue: 0,0:34:02.20,0:34:02.79,Default,,0,0,0,,Đại ca,
Dialogue: 0,0:34:02.99,0:34:03.79,Default,,0,0,0,,người này là ai?
Dialogue: 0,0:34:04.44,0:34:07.03,Default,,0,0,0,,Là thái thường bác học mới nhậm chức,\NBàng Nghi Chi.
Dialogue: 0,0:34:07.20,0:34:07.71,Default,,0,0,0,,Nghe nói
Dialogue: 0,0:34:07.71,0:34:09.67,Default,,0,0,0,,là đệ tử chân truyền\Ncủa chưởng môn Tiêu Dao Tông,
Dialogue: 0,0:34:09.88,0:34:11.63,Default,,0,0,0,,cũng là sư thúc đồng môn của lục điện hạ,
Dialogue: 0,0:34:12.28,0:34:14.11,Default,,0,0,0,,sở trường là trừ yêu bắt ma.
Dialogue: 0,0:34:15.11,0:34:17.03,Default,,0,0,0,,Vậy huynh có biết hắn theo học ai không?
Dialogue: 0,0:34:17.23,0:34:21.00,Default,,0,0,0,,Nghe nói là Thanh Hư chân nhân gì đó\Ncủa núi Bất Chiếu.
Dialogue: 0,0:34:22.19,0:34:23.51,Default,,0,0,0,,[Chưa từng nghe nói,]
Dialogue: 0,0:34:24.19,0:34:26.63,Default,,0,0,0,,[chắc là kiểu như\Nthái sư phụ của Triệu Du bá bá.]
Dialogue: 0,0:34:29.67,0:34:32.00,Default,,0,0,0,,Yêu quái gì cũng không thoát được\Nsự tra xét của hắn,
Dialogue: 0,0:34:32.00,0:34:33.51,Default,,0,0,0,,có thể định càn khôn trong tích tắc.
Dialogue: 0,0:34:34.11,0:34:35.19,Default,,0,0,0,,Nếu hắn ra tay,
Dialogue: 0,0:34:35.32,0:34:36.67,Default,,0,0,0,,yêu ma ắt phải chết.
Dialogue: 0,0:34:46.84,0:34:47.32,Default,,0,0,0,,[Chết rồi.]
Dialogue: 0,0:34:47.92,0:34:49.32,Default,,0,0,0,,[Người này là cao đồ của Tiêu Dao Tông.]
Dialogue: 0,0:34:49.67,0:34:51.88,Default,,0,0,0,,[Nếu để hắn phát hiện\NĐàm Đài Tẫn mang tà cốt,]
Dialogue: 0,0:34:51.88,0:34:52.88,Default,,0,0,0,,[giết chết hắn,]
Dialogue: 0,0:34:53.03,0:34:53.92,Default,,0,0,0,,[vậy chẳng phải loạn hết sao?]
Dialogue: 0,0:34:55.71,0:34:56.51,Default,,0,0,0,,[Làm sao bây giờ?]
Dialogue: 0,0:34:59.32,0:35:01.07,Default,,0,0,0,,Bàng bác học có gì chỉ giáo?
Dialogue: 0,0:35:02.23,0:35:03.88,Default,,0,0,0,,Tiểu sư thúc, hắn sao thế?
Dialogue: 0,0:35:06.45,0:35:07.15,Default,,0,0,0,,Bàng bác học, hắn…
Dialogue: 0,0:35:07.17,0:35:07.93,Default,,0,0,0,,Vị công tử này,
Dialogue: 0,0:35:15.19,0:35:16.28,Default,,0,0,0,,tướng mạo rất đẹp,
Dialogue: 0,0:35:17.44,0:35:19.92,Default,,0,0,0,,sau này sẽ giàu có lắm.
Dialogue: 0,0:35:20.44,0:35:22.63,Default,,0,0,0,,Sau này nếu giàu có, xin chớ quên nhau.
Dialogue: 0,0:35:22.63,0:35:23.48,Default,,0,0,0,,Xin chớ quên nhau.
Dialogue: 0,0:35:27.32,0:35:29.11,Default,,0,0,0,,Vậy thì nhờ phước của Bàng bác học rồi.
Dialogue: 0,0:35:31.92,0:35:33.92,Default,,0,0,0,,[Sát hạch đệ tử của Tiêu Dao Tông\N500 năm trước]
Dialogue: 0,0:35:34.19,0:35:36.40,Default,,0,0,0,,[liệu có lỏng lẻo quá không nhỉ?]
Dialogue: 0,0:35:42.88,0:35:43.55,Default,,0,0,0,,Bàng bác học,
Dialogue: 0,0:35:43.92,0:35:45.00,Default,,0,0,0,,xoay lâu như thế rồi,
Dialogue: 0,0:35:45.00,0:35:46.11,Default,,0,0,0,,có phát hiện gì không?
Dialogue: 0,0:35:48.15,0:35:48.88,Default,,0,0,0,,Bẩm tướng quân,
Dialogue: 0,0:35:49.19,0:35:50.84,Default,,0,0,0,,hiện giờ tuy chưa nhìn ra manh mối gì,
Dialogue: 0,0:35:50.84,0:35:52.07,Default,,0,0,0,,nhưng may mà các vị trong phủ
Dialogue: 0,0:35:52.07,0:35:53.28,Default,,0,0,0,,đều không có gì đáng ngại.
Dialogue: 0,0:35:53.55,0:35:54.92,Default,,0,0,0,,Xin tướng quân cho phép tại hạ
Dialogue: 0,0:35:54.92,0:35:56.23,Default,,0,0,0,,bày trận pháp trong phủ
Dialogue: 0,0:35:56.23,0:35:57.51,Default,,0,0,0,,để tìm tung tích của yêu ma,
Dialogue: 0,0:35:57.59,0:35:58.59,Default,,0,0,0,,tìm lại đại tiểu thư.
Dialogue: 0,0:35:59.03,0:36:00.92,Default,,0,0,0,,Được, vậy làm phiền Bàng bác học rồi.
Dialogue: 0,0:36:03.28,0:36:04.23,Default,,0,0,0,,Ý ngươi là
Dialogue: 0,0:36:05.28,0:36:07.15,Default,,0,0,0,,đại yêu tu vi cao kia
Dialogue: 0,0:36:07.44,0:36:09.88,Default,,0,0,0,,đưa người đến núi Bán Chẩm\Nở ngoại thành phía Nam,
Dialogue: 0,0:36:10.23,0:36:11.19,Default,,0,0,0,,còn dùng những người này
Dialogue: 0,0:36:13.07,0:36:14.19,Default,,0,0,0,,để trồng hoa?
Dialogue: 0,0:36:14.88,0:36:15.40,Default,,0,0,0,,Đúng.
Dialogue: 0,0:36:15.92,0:36:17.23,Default,,0,0,0,,Diệp Băng Thường và Oánh Tâm
Dialogue: 0,0:36:17.23,0:36:18.84,Default,,0,0,0,,cũng bị đại yêu bắt đi rồi.
Dialogue: 0,0:36:19.28,0:36:20.63,Default,,0,0,0,,Nhưng có vẻ yêu ma này
Dialogue: 0,0:36:20.63,0:36:22.92,Default,,0,0,0,,tạm thời chưa vội lấy mạng họ.
Dialogue: 0,0:36:23.71,0:36:25.71,Default,,0,0,0,,Chi bằng nói cho họ biết\Nnhững manh mối này,
Dialogue: 0,0:36:26.11,0:36:27.51,Default,,0,0,0,,để họ đi cứu là được.
Dialogue: 0,0:36:27.92,0:36:28.63,Default,,0,0,0,,Ta biết rồi.
Dialogue: 0,0:36:30.48,0:36:32.48,Default,,0,0,0,,Ngươi đi xem đám Diệp Tịch Vụ đang làm gì.
Dialogue: 0,0:36:35.44,0:36:37.55,Default,,0,0,0,,[Diệp Tịch Vụ gần đây\Nnhạy bén khác thường.]
Dialogue: 0,0:36:38.19,0:36:40.32,Default,,0,0,0,,[Cô ta đã nghi ngờ\Nta có thể khống chế chim thú rồi.]
Dialogue: 0,0:36:40.96,0:36:42.44,Default,,0,0,0,,[Bây giờ nói cho cô ta những chuyện này]
Dialogue: 0,0:36:43.00,0:36:44.51,Default,,0,0,0,,[khác nào chủ động nhận tội.]
Dialogue: 0,0:36:45.28,0:36:47.59,Default,,0,0,0,,[Thôi vậy, cần gì rước họa vào người.]
Dialogue: 0,0:36:48.78,0:36:50.40,Default,,0,0,0,,[Tỏa Yêu Trận]\NTỏa Yêu Trận.
Dialogue: 0,0:36:50.40,0:36:51.10,Default,,0,0,0,,[Tỏa Yêu Trận]
Dialogue: 0,0:36:51.59,0:36:52.63,Default,,0,0,0,,Ở đây.
Dialogue: 0,0:36:53.84,0:36:55.84,Default,,0,0,0,,Bước tiếp theo… Bước tiếp theo…
Dialogue: 0,0:36:56.44,0:36:57.63,Default,,0,0,0,,Bước tiếp theo là gì nhỉ?
Dialogue: 0,0:36:59.19,0:37:00.96,Default,,0,0,0,,Cờ này cắm ở đâu?
Dialogue: 0,0:37:01.51,0:37:03.07,Default,,0,0,0,,Cờ trắng là Kim.
Dialogue: 0,0:37:05.19,0:37:07.51,Default,,0,0,0,,Ở đây cắm rồi, ở kia cũng không đúng.
Dialogue: 0,0:37:09.15,0:37:10.19,Default,,0,0,0,,Không đúng.
Dialogue: 0,0:37:11.44,0:37:12.51,Default,,0,0,0,,Không phải ở đây.
Dialogue: 0,0:37:12.63,0:37:15.63,Default,,0,0,0,,[Trận pháp của tên gà mờ này\Ncó tác dụng không?]
Dialogue: 0,0:37:16.55,0:37:17.23,Default,,0,0,0,,[Thôi.]
Dialogue: 0,0:37:17.44,0:37:18.51,Default,,0,0,0,,[Cầu người không bằng cầu mình.]
Dialogue: 0,0:37:23.32,0:37:24.59,Default,,0,0,0,,[May mà lúc trước bị cha]
Dialogue: 0,0:37:24.59,0:37:26.11,Default,,0,0,0,,[ép học vẽ bùa mấy năm.]
Dialogue: 0,0:37:26.19,0:37:27.28,Default,,0,0,0,,[Hiện giờ không có pháp lực,]
Dialogue: 0,0:37:27.28,0:37:28.63,Default,,0,0,0,,[vừa hay có thể giải quyết\Nviệc cấp bách trước mắt.]
Dialogue: 0,0:37:32.96,0:37:33.55,Default,,0,0,0,,[Bàng bác học,]
Dialogue: 0,0:37:33.92,0:37:35.15,Default,,0,0,0,,[mượn ngươi mấy lá bùa nhé.]
Dialogue: 0,0:37:35.44,0:37:36.59,Default,,0,0,0,,[Dù sao cũng là tốt cho mọi người,]
Dialogue: 0,0:37:36.71,0:37:37.92,Default,,0,0,0,,[chắc ngươi không để bụng đâu.]
Dialogue: 0,0:38:05.48,0:38:06.92,Default,,0,0,0,,[Nỗi khổ của nhân gian]
Dialogue: 0,0:38:08.15,0:38:11.07,Default,,0,0,0,,[quả nhiên là phân bón tốt nhất\Ncho Yểm Chi Hoa.]
Dialogue: 0,0:38:13.76,0:38:15.76,Default,,0,0,0,,[Không uổng công ta ngàn dặm xa xôi]
Dialogue: 0,0:38:16.00,0:38:17.96,Default,,0,0,0,,[từ Hoang Uyên tới đây.]
Dialogue: 0,0:38:23.03,0:38:23.67,Default,,0,0,0,,[Hai người này]
Dialogue: 0,0:38:23.67,0:38:25.55,Default,,0,0,0,,[chẳng phải tối qua mới bị ta bắt về sao?]
Dialogue: 0,0:38:26.32,0:38:28.00,Default,,0,0,0,,[Mới đó đã nở Yểm Chi Hoa rồi.]
Dialogue: 0,0:38:29.03,0:38:30.96,Default,,0,0,0,,[Ta quả nhiên không nhìn nhầm.]
Dialogue: 0,0:38:31.40,0:38:33.96,Default,,0,0,0,,[Để ta xem quá khứ của các ngươi]
Dialogue: 0,0:38:34.03,0:38:36.03,Default,,0,0,0,,[có gì đặc biệt.]
Dialogue: 0,0:38:38.15,0:38:40.32,Default,,0,0,0,,[Hóa ra là tỳ nữ của nước Cảnh,]
Dialogue: 0,0:38:40.88,0:38:43.32,Default,,0,0,0,,[đi theo con tin đến nước Thịnh.]
Dialogue: 0,0:38:43.32,0:38:45.11,Default,,0,0,0,,Thả ta ra. Điện hạ!
Dialogue: 0,0:38:46.03,0:38:47.11,Default,,0,0,0,,Thả ta ra.
Dialogue: 0,0:38:50.11,0:38:50.88,Default,,0,0,0,,[Đây là ai?]
Dialogue: 0,0:38:54.11,0:38:56.88,Default,,0,0,0,,[Không ngờ lại có người\Ncó vận mệnh trắc trở như vậy.]
Dialogue: 0,0:38:57.88,0:38:59.44,Default,,0,0,0,,[Trong cuộc đời chưa từng có]
Dialogue: 0,0:38:59.44,0:39:01.84,Default,,0,0,0,,[một chút ấm áp và ánh sáng nào.]
Dialogue: 0,0:39:03.48,0:39:05.36,Default,,0,0,0,,[Nếu dùng hắn để trồng Yểm Chi Hoa,]
Dialogue: 0,0:39:06.00,0:39:08.36,Default,,0,0,0,,[ắt sẽ là cực phẩm đẹp nhất,]
Dialogue: 0,0:39:09.19,0:39:11.96,Default,,0,0,0,,[chắc chắn có thể giúp ta hóa thành ma.]
Dialogue: 0,0:39:17.02,0:39:19.18,Default,,0,0,0,,[Lệnh]
Dialogue: 0,0:39:38.48,0:39:39.63,Default,,0,0,0,,[Tỏa Yêu Trận này]
Dialogue: 0,0:39:40.00,0:39:41.32,Default,,0,0,0,,[khác nào ôm cây đợi thỏ.]
Dialogue: 0,0:39:41.96,0:39:43.15,Default,,0,0,0,,[Nếu thỏ không đến]
Dialogue: 0,0:39:43.19,0:39:44.55,Default,,0,0,0,,[thì đợi một vạn năm cũng không bắt được.]
Dialogue: 0,0:39:57.36,0:39:57.84,Default,,0,0,0,,Đi đi.
Dialogue: 0,0:40:01.71,0:40:02.28,Default,,0,0,0,,Nhị tiểu thư,
Dialogue: 0,0:40:02.88,0:40:03.40,Default,,0,0,0,,không sao chứ?
Dialogue: 0,0:40:04.36,0:40:05.07,Default,,0,0,0,,Không sao.
Dialogue: 0,0:40:05.44,0:40:06.92,Default,,0,0,0,,Ta bị con chim lúc nãy
Dialogue: 0,0:40:06.92,0:40:07.76,Default,,0,0,0,,làm giật mình.
Dialogue: 0,0:40:14.03,0:40:14.96,Default,,0,0,0,,Ta nghĩ
Dialogue: 0,0:40:15.23,0:40:17.15,Default,,0,0,0,,nếu ngài không nói cho họ biết\Nyêu quái ở đâu
Dialogue: 0,0:40:17.44,0:40:19.03,Default,,0,0,0,,thì họ đợi đến khi trời sáng\Ncũng không có gì.
Dialogue: 0,0:40:20.23,0:40:23.51,Default,,0,0,0,,Không ngờ Diệp Tịch Vụ
Dialogue: 0,0:40:23.96,0:40:25.51,Default,,0,0,0,,không sợ trời, chẳng sợ đất
Dialogue: 0,0:40:26.63,0:40:27.51,Default,,0,0,0,,lại sợ chim.
Dialogue: 0,0:40:28.51,0:40:29.80,Default,,0,0,0,,Ngươi tránh xa cô ta chút.
Dialogue: 0,0:40:29.80,0:40:30.48,Default,,0,0,0,,Được rồi.
Dialogue: 0,0:40:30.84,0:40:32.88,Default,,0,0,0,,Nữ nhân này thường ngày hung dữ,
Dialogue: 0,0:40:32.88,0:40:34.19,Default,,0,0,0,,không ngờ lại sợ ta.
Dialogue: 0,0:40:56.15,0:40:58.40,Default,,0,0,0,,[Đêm khuya đúng là thời khắc tốt nhất.]
Dialogue: 0,0:41:00.00,0:41:00.84,Default,,0,0,0,,[Ta ngửi ra rồi.]
Dialogue: 0,0:41:01.23,0:41:03.03,Default,,0,0,0,,[Chính là chỗ kia, chính là hắn.]
Dialogue: 0,0:41:04.76,0:41:06.88,Default,,0,0,0,,[Chưa từng ngửi thấy\Nthứ mùi thơm ngọt như vậy.]
Dialogue: 0,0:41:07.51,0:41:08.63,Default,,0,0,0,,[Chắc chắn có thể trồng ra]
Dialogue: 0,0:41:08.63,0:41:11.07,Default,,0,0,0,,[Yểm Chi Hoa đẹp nhất thế gian.]
Dialogue: 0,0:41:11.80,0:41:13.76,Default,,0,0,0,,[Không ngờ lại có\Nngười của Tiêu Dao Tông ở đây,]
Dialogue: 0,0:41:14.51,0:41:15.48,Default,,0,0,0,,[phải cẩn thận rồi.]
Dialogue: 0,0:41:17.00,0:41:17.63,Default,,0,0,0,,Đó là cái gì?
Dialogue: 0,0:41:19.76,0:41:21.28,Default,,0,0,0,,Thái thượng sắc lệnh, nhiếp hồn thúc ảnh.
Dialogue: 0,0:41:21.44,0:41:23.11,Default,,0,0,0,,Huyền phiên phược mị, thiên địa túc thanh.
Dialogue: 0,0:41:23.51,0:41:24.15,Default,,0,0,0,,Thu!
Dialogue: 0,0:41:33.11,0:41:33.76,Default,,0,0,0,,Lục điện hạ,
Dialogue: 0,0:41:34.00,0:41:35.15,Default,,0,0,0,,bắt được rồi này.
Dialogue: 0,0:41:47.00,0:41:47.55,Default,,0,0,0,,Không hay rồi.
Dialogue: 0,0:41:47.84,0:41:49.00,Default,,0,0,0,,Đám mây đen này là thuật che mắt.
Dialogue: 0,0:41:49.55,0:41:50.51,Default,,0,0,0,,Dương Đông kích Tây.
Dialogue: 0,0:41:52.96,0:41:53.44,Default,,0,0,0,,Đó là…
Dialogue: 0,0:41:53.96,0:41:54.96,Default,,0,0,0,,Phòng của Đàm Đài Tẫn.
Dialogue: 0,0:42:14.10,0:42:16.34,Default,,0,0,0,,[Diệp Băng Thường ở núi Bán Chẩm\Nngoại ô phía Nam thành]
Dialogue: 0,0:42:16.36,0:42:17.76,Default,,0,0,0,,[Như thế này thì không nhận ra được rồi.]
Dialogue: 0,0:42:20.19,0:42:21.32,Default,,0,0,0,,[Phải nghĩ cách]
Dialogue: 0,0:42:21.48,0:42:23.03,Default,,0,0,0,,[nhét mảnh giấy này cho Tiêu Lẫm.]
Dialogue: 0,0:42:24.19,0:42:26.40,Default,,0,0,0,,[Để hắn đi làm anh hùng đi.]
Dialogue: 0,0:42:27.23,0:42:29.44,Default,,0,0,0,,[Ta không thể\Nkhiến Diệp Tịch Vụ nghi ngờ được.]
Dialogue: 0,0:42:49.44,0:42:51.59,Default,,0,0,0,,Ngươi chính là người ta vẫn luôn tìm kiếm.
Dialogue: 0,0:42:52.19,0:42:53.92,Default,,0,0,0,,Ngươi nhất định có thể giúp ta
Dialogue: 0,0:42:53.92,0:42:55.44,Default,,0,0,0,,trồng ra đóa Yểm Chi Hoa đẹp nhất.
Dialogue: 0,0:43:05.19,0:43:06.63,Default,,0,0,0,,Trùng linh khai quang, tử ý huyền lôi.
Dialogue: 0,0:43:06.92,0:43:07.36,Default,,0,0,0,,Chém!
Dialogue: 0,0:43:10.55,0:43:11.80,Default,,0,0,0,,Không tự lượng sức mình.
Dialogue: 0,0:43:11.92,0:43:13.44,Default,,0,0,0,,Đàm Đài Tẫn, ngươi nắm chặt tay ta.
Dialogue: 0,0:43:13.44,0:43:15.15,Default,,0,0,0,,Diệp Tịch Vụ, cô ngốc hả?
Dialogue: 0,0:43:15.28,0:43:16.15,Default,,0,0,0,,Chạy đến tìm cái chết.
Dialogue: 0,0:43:17.15,0:43:18.44,Default,,0,0,0,,Ta không thể để ngươi chết.
Dialogue: 0,0:43:20.11,0:43:22.03,Default,,0,0,0,,[Hay cho đôi tình nhân si tình.]
Dialogue: 0,0:43:22.84,0:43:24.51,Default,,0,0,0,,[Vậy thì đi cùng nhau thôi.]
Dialogue: 0,0:43:32.63,0:43:33.28,Default,,0,0,0,,Nhị tiểu thư.
Dialogue: 0,0:43:49.55,0:43:50.36,Default,,0,0,0,,Chết rồi, chết rồi.
Dialogue: 0,0:43:51.00,0:43:52.51,Default,,0,0,0,,Diệp tướng quân\Nthương cô con gái này nhất.
Dialogue: 0,0:43:53.19,0:43:54.96,Default,,0,0,0,,Chắc ông ấy sẽ vặt đầu ta mất.
Dialogue: 0,0:43:57.28,0:43:57.88,Default,,0,0,0,,Lục điện hạ,
Dialogue: 0,0:43:58.40,0:43:59.92,Default,,0,0,0,,nhị tiểu thư không thể có chuyện gì được.
Dialogue: 0,0:44:00.11,0:44:01.76,Default,,0,0,0,,Nhị tiểu thư bị yêu quái bắt đi rồi.
Dialogue: 0,0:44:09.92,0:44:12.00,Default,,0,0,0,,Diệp Băng Thường ở núi Bán Chẩm\Nngoại ô phía Nam thành.
Dialogue: 0,0:44:12.67,0:44:13.44,Default,,0,0,0,,Ta phải đi cứu cô ấy.
Dialogue: 0,0:44:15.59,0:44:17.96,Default,,0,0,0,,Lá bùa này không phải cạm bẫy gì chứ?
Dialogue: 0,0:44:20.67,0:44:23.11,Default,,0,0,0,,Bây giờ chỉ có thể còn nước còn tát thôi.
Dialogue: 0,0:44:24.07,0:44:25.48,Default,,0,0,0,,Gọi Tiềm Long Vệ, chúng ta đi.
Dialogue: 0,0:44:25.71,0:44:26.23,Default,,0,0,0,,Được.
Dialogue: 0,0:44:36.63,0:44:37.92,Default,,0,0,0,,[Đây là nơi nào?]
Dialogue: 0,0:44:38.67,0:44:39.32,Default,,0,0,0,,[Tô Tô,]
Dialogue: 0,0:44:39.76,0:44:41.32,Default,,0,0,0,,[Ma Thần đó khí thế bừng bừng,]
Dialogue: 0,0:44:41.76,0:44:43.15,Default,,0,0,0,,[muội phải ở lại bảo vệ sơn môn.]
Dialogue: 0,0:44:43.48,0:44:44.84,Default,,0,0,0,,[Bên phía chưởng môn để ta giúp sức.]
Dialogue: 0,0:44:44.88,0:44:45.55,Default,,0,0,0,,[Cái gì?]
Dialogue: 0,0:44:46.36,0:44:47.63,Default,,0,0,0,,[Sao sư huynh lại ở đây?]
Dialogue: 0,0:44:47.88,0:44:48.24,Default,,0,0,0,,[Hơn nữa ta…]
Dialogue: 0,0:44:48.24,0:44:48.93,Default,,0,0,0,,[Muội nghe ta nói.]
Dialogue: 0,0:44:49.04,0:44:50.85,Default,,0,0,0,,[Hành Dương Tông phải có người kế thừa.]
Dialogue: 0,0:44:51.33,0:44:52.45,Default,,0,0,0,,[Hành Dương Tông…]
Dialogue: 0,0:44:52.93,0:44:54.08,Default,,0,0,0,,[Nhưng rõ ràng bây giờ đã…]
Dialogue: 0,0:44:54.08,0:44:55.97,Default,,0,0,0,,[Tô Tô, mau tỉnh lại.]
Dialogue: 0,0:44:55.97,0:44:56.68,Default,,0,0,0,,[Đã là…]
Dialogue: 0,0:44:56.68,0:44:58.45,Default,,0,0,0,,[Đàm Đài Tẫn đã bị mộng yêu giết chết.]
Dialogue: 0,0:44:58.45,0:44:59.52,Default,,0,0,0,,[Ma Thần thức tỉnh,]
Dialogue: 0,0:44:59.72,0:45:00.85,Default,,0,0,0,,[con sẽ thất bại.]
Dialogue: 0,0:45:00.85,0:45:01.97,Default,,0,0,0,,[Tô Tô, mau tỉnh lại.]
Dialogue: 0,0:45:02.24,0:45:03.12,Default,,0,0,0,,[Đàm Đài Tẫn đã bị mộng yêu giết rồi.]
Dialogue: 0,0:45:03.12,0:45:04.81,Default,,0,0,0,,[Tô Tô, mau tỉnh lại.]
Dialogue: 0,0:45:05.01,0:45:06.72,Default,,0,0,0,,[Đàm Đài Tẫn đã bị mộng yêu giết rồi.]
Dialogue: 0,0:45:06.93,0:45:07.64,Default,,0,0,0,,[Cha.]
Dialogue: 0,0:45:09.20,0:45:11.04,Default,,0,0,0,,- [Sư muội, mau tỉnh lại.]\N- [Sư muội, sư muội.]
Dialogue: 0,0:45:13.45,0:45:15.93,Default,,0,0,0,,[Ma Thần, Đàm Đài Tẫn…]
Dialogue: 0,0:45:20.45,0:45:21.08,Default,,0,0,0,,[mộng yêu.]
Dialogue: 0,0:45:27.77,0:45:29.20,Default,,0,0,0,,- [Sư muội, mau tỉnh lại.]\N- [Sư muội.]
Dialogue: 0,0:45:29.33,0:45:31.12,Default,,0,0,0,,- [Sư muội, mau tỉnh lại.]\N- [Sư muội, sư muội.]
Dialogue: 0,0:45:41.68,0:45:42.85,Default,,0,0,0,,[Đây là đâu?]
Dialogue: 0,0:45:43.29,0:45:44.24,Default,,0,0,0,,[Sào huyệt của yêu quái.]
Dialogue: 0,0:45:44.77,0:45:46.33,Default,,0,0,0,,[Giấc mơ vừa rồi là thế nào?]
Dialogue: 0,0:45:54.49,0:45:55.24,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:45:55.72,0:45:57.04,Default,,0,0,0,,Tốt quá rồi, ngươi chưa chết.
Dialogue: 0,0:46:00.81,0:46:01.85,Default,,0,0,0,,Ngươi ngây ra đó làm gì?
Dialogue: 0,0:46:02.12,0:46:03.12,Default,,0,0,0,,Mau giúp ta xuống dưới.
Dialogue: 0,0:46:13.29,0:46:14.29,Default,,0,0,0,,Yểm Chi Hoa.
Dialogue: 0,0:46:15.85,0:46:16.85,Default,,0,0,0,,Ra là thế.
Dialogue: 0,0:46:18.56,0:46:19.64,Default,,0,0,0,,Yểm Chi Hoa là gì?
Dialogue: 0,0:46:21.68,0:46:23.08,Default,,0,0,0,,Ta từng đọc được trong sách,
Dialogue: 0,0:46:23.72,0:46:25.37,Default,,0,0,0,,mộng yêu bắt người về sào huyệt,
Dialogue: 0,0:46:25.37,0:46:26.81,Default,,0,0,0,,lấy nỗi sợ hoặc ký ức xấu xa
Dialogue: 0,0:46:26.81,0:46:28.49,Default,,0,0,0,,trong lòng người làm hạt giống,
Dialogue: 0,0:46:29.20,0:46:31.16,Default,,0,0,0,,sinh ra dây leo cuốn chặt họ,
Dialogue: 0,0:46:37.29,0:46:38.93,Default,,0,0,0,,khiến họ không ngừng rơi vào ác mộng,
Dialogue: 0,0:46:39.37,0:46:41.20,Default,,0,0,0,,kết thành Yểm Chi Hoa cho cô ta hấp thụ,
Dialogue: 0,0:46:42.37,0:46:43.72,Default,,0,0,0,,giống như chăn nuôi gia súc.
Dialogue: 0,0:46:49.64,0:46:50.37,Default,,0,0,0,,Diệp Tịch Vụ,
Dialogue: 0,0:46:52.04,0:46:52.81,Default,,0,0,0,,cô đọc sách?
Dialogue: 0,0:46:58.93,0:46:59.93,Default,,0,0,0,,Ngươi có nhìn thấy tỷ tỷ ta không?
Dialogue: 0,0:47:00.37,0:47:01.72,Default,,0,0,0,,Có lẽ tỷ ấy cũng ở đây.
Dialogue: 0,0:47:03.77,0:47:04.49,Default,,0,0,0,,Ở bên kia.
Dialogue: 0,0:47:05.49,0:47:06.08,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:47:15.77,0:47:16.33,Default,,0,0,0,,Ở đây.
Dialogue: 0,0:47:39.45,0:47:40.41,Default,,0,0,0,,Oánh Tâm.
Dialogue: 0,0:47:41.24,0:47:42.37,Default,,0,0,0,,Sao bà ấy lại ở đây?
Dialogue: 0,0:47:45.52,0:47:46.56,Default,,0,0,0,,Sao cô biết bà ấy?
Dialogue: 0,0:47:49.04,0:47:51.12,Default,,0,0,0,,Lúc trước ta vào cung có gặp bà ấy.
Dialogue: 0,0:47:54.49,0:47:55.77,Default,,0,0,0,,Cô đang điều tra ta?
Dialogue: 0,0:47:57.08,0:47:57.89,Default,,0,0,0,,Không có.
Dialogue: 0,0:47:58.45,0:47:59.52,Default,,0,0,0,,Chỉ là tình cờ…
Dialogue: 0,0:47:59.52,0:48:01.72,Default,,0,0,0,,Tình cờ đi ngang qua lãnh cung hẻo lánh,
Dialogue: 0,0:48:02.08,0:48:04.01,Default,,0,0,0,,còn gặp một bà điên.
Dialogue: 0,0:48:10.20,0:48:11.29,Default,,0,0,0,,Ta điều tra ngươi thì đã sao?
Dialogue: 0,0:48:11.37,0:48:12.97,Default,,0,0,0,,Ai bảo ngươi suốt ngày lén la lén lút.
Dialogue: 0,0:48:19.04,0:48:20.49,Default,,0,0,0,,Ngươi có nhìn thấy yêu nghiệt kia không?
Dialogue: 0,0:48:24.37,0:48:25.24,Default,,0,0,0,,Trời vẫn chưa sáng,
Dialogue: 0,0:48:25.89,0:48:27.12,Default,,0,0,0,,chắc là đi săn tiếp rồi.
Dialogue: 0,0:48:29.97,0:48:31.29,Default,,0,0,0,,Bắt bao nhiêu người thế này,
Dialogue: 0,0:48:31.60,0:48:32.89,Default,,0,0,0,,còn có kết giới của mình,
Dialogue: 0,0:48:33.33,0:48:34.85,Default,,0,0,0,,là đại yêu đạo hạnh thâm sâu.
Dialogue: 0,0:48:35.29,0:48:37.01,Default,,0,0,0,,Thảo nào Bàng Nghi Chi\Nkhông bắt được cô ta.
Dialogue: 0,0:48:43.29,0:48:44.68,Default,,0,0,0,,Giấc mộng càng sâu,
Dialogue: 0,0:48:45.16,0:48:46.52,Default,,0,0,0,,dây leo quấn càng chặt.
Dialogue: 0,0:48:47.77,0:48:48.56,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:48:49.60,0:48:50.97,Default,,0,0,0,,sao ngươi không bị trói?
Dialogue: 0,0:48:53.45,0:48:54.89,Default,,0,0,0,,Vì ta chưa từng nằm mơ.
Dialogue: 0,0:49:01.93,0:49:02.64,Default,,0,0,0,,Cứu người trước đã.
Dialogue: 0,0:49:09.20,0:49:09.68,Default,,0,0,0,,Cẩn thận.
Dialogue: 0,0:49:43.40,0:49:45.19,Default,,0,0,0,,[Đây là tộc Di Nguyệt.]
Dialogue: 0,0:49:47.96,0:49:49.32,Default,,0,0,0,,[Nhưng vừa rồi vẫn còn ở trong rừng.]
Dialogue: 0,0:49:52.11,0:49:52.76,Default,,0,0,0,,[Đây là…]
Dialogue: 0,0:49:54.03,0:49:55.19,Default,,0,0,0,,[Đây không phải là hiện thực.]
Dialogue: 0,0:49:57.71,0:49:58.51,Default,,0,0,0,,[Đàm Đài Tẫn.]
Dialogue: 0,0:50:06.63,0:50:08.00,Default,,0,0,0,,Oánh Tâm thỉnh an công chúa.
Dialogue: 0,0:50:08.00,0:50:12.54,Default,,0,0,0,,♪Giữa chốn hư không, chưa từng mong đợi♪
Dialogue: 0,0:50:14.44,0:50:15.19,Default,,0,0,0,,Ta biết rồi.
Dialogue: 0,0:50:16.00,0:50:17.11,Default,,0,0,0,,Cảm ơn cô đã nói với ta.
Dialogue: 0,0:50:18.00,0:50:19.51,Default,,0,0,0,,Nhưng ta là công chúa của tộc Di Nguyệt,
Dialogue: 0,0:50:21.03,0:50:23.28,Default,,0,0,0,,vì tộc Di Nguyệt, ta không thể không đi.
Dialogue: 0,0:50:24.63,0:50:25.19,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:50:26.82,0:50:29.22,Default,,0,0,0,,♪Nuối tiếc♪
Dialogue: 0,0:50:29.23,0:50:29.80,Default,,0,0,0,,Công chúa,
Dialogue: 0,0:50:30.84,0:50:32.67,Default,,0,0,0,,Oánh Tâm và Lan An chỉ sống vì công chúa.
Dialogue: 0,0:50:33.71,0:50:34.63,Default,,0,0,0,,Công chúa đi đâu
Dialogue: 0,0:50:34.88,0:50:36.03,Default,,0,0,0,,thì chúng ta theo người tới đó.
Dialogue: 0,0:50:37.92,0:50:39.63,Default,,0,0,0,,[Xem ra nơi này\Nlà mộng cảnh của Oánh Tâm.]
Dialogue: 0,0:50:40.92,0:50:43.14,Default,,0,0,0,,- [Công chúa của tộc Di Nguyệt]\N- Tộc Di Nguyệt quy thuận Gia An.
Dialogue: 0,0:50:43.40,0:50:44.96,Default,,0,0,0,,- [chính là mẫu thân của Đàm Đài Tẫn.]\N- Công chúa Nguyệt Nguyễn Nguyễn
Dialogue: 0,0:50:45.44,0:50:46.80,Default,,0,0,0,,hiền lương thục đức,
Dialogue: 0,0:50:47.63,0:50:49.59,Default,,0,0,0,,nay phong làm Nhu phi.
Dialogue: 0,0:50:50.11,0:50:51.55,Default,,0,0,0,,Hành lễ nghênh đón,
Dialogue: 0,0:50:52.28,0:50:53.71,Default,,0,0,0,,làm lễ thành hôn,
Dialogue: 0,0:50:54.11,0:50:55.55,Default,,0,0,0,,cả nước chung vui.
Dialogue: 0,0:50:56.76,0:50:59.76,Default,,0,0,0,,Cung chúc bệ hạ lương duyên vĩnh kết,
Dialogue: 0,0:51:00.28,0:51:02.07,Default,,0,0,0,,thiên thu muôn đời.
Dialogue: 0,0:51:04.38,0:51:09.98,Default,,0,0,0,,♪Vụn vỡ, xây lại, hủy diệt, làm lại♪
Dialogue: 0,0:51:09.98,0:51:12.74,Default,,0,0,0,,♪Nước mắt bi thương cũng không sao♪
Dialogue: 0,0:51:12.74,0:51:15.42,Default,,0,0,0,,♪Thiên mệnh đuổi bắt cũng chẳng màng♪
Dialogue: 0,0:51:15.46,0:51:18.42,Default,,0,0,0,,♪Huyền điểu bay về, là ai đây?♪
Dialogue: 0,0:51:29.00,0:51:33.94,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:51:48.96,0:51:56.72,Default,,0,0,0,,♪Nỗi lòng phàm tục\Nlà ngước mắt lên trăng bỗng khuyết♪
Dialogue: 0,0:51:56.72,0:52:04.52,Default,,0,0,0,,♪Hồng trần là đôi mắt thấy\Nmuôn hoa rụng giữa cơn mưa tuyết♪
Dialogue: 0,0:52:04.52,0:52:11.64,Default,,0,0,0,,♪Trắc ẩn là\Nmột cánh bướm trong lòng khi tan biến♪
Dialogue: 0,0:52:12.24,0:52:16.12,Default,,0,0,0,,♪Tỉnh ngộ là gột rửa hồi ức\Ntrong nước đục♪
Dialogue: 0,0:52:16.12,0:52:20.32,Default,,0,0,0,,♪Từ ấy chẳng gặp nhau♪
Dialogue: 0,0:52:21.88,0:52:25.48,Default,,0,0,0,,♪Ta từng thấy lời dịu dàng, từng nở hoa♪
Dialogue: 0,0:52:25.48,0:52:28.72,Default,,0,0,0,,♪Cay mắt đến nỗi nói mớ♪
Dialogue: 0,0:52:29.28,0:52:33.40,Default,,0,0,0,,♪Tơ tình vấn vương, mái ngói dễ vỡ♪
Dialogue: 0,0:52:33.40,0:52:36.92,Default,,0,0,0,,♪Một vòng tay có sự sợ hãi vô tận♪
Dialogue: 0,0:52:37.52,0:52:40.96,Default,,0,0,0,,♪Ta kính trọng người biết bao,\Nthời gian thấm thoát thoi đưa♪
Dialogue: 0,0:52:40.96,0:52:44.64,Default,,0,0,0,,♪Từng vững tin được yêu trong phút chốc♪
Dialogue: 0,0:52:44.72,0:52:48.84,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:52:48.84,0:52:56.60,Default,,0,0,0,,♪Sự thành kính tựa ánh trăng không tì vết♪
Dialogue: 0,0:52:58.60,0:53:02.00,Default,,0,0,0,,♪Hãy lắng nghe hơi thở của đóa hoa♪
Dialogue: 0,0:53:02.12,0:53:05.52,Default,,0,0,0,,♪Như sự phồn hoa của chúng sinh muôn loài♪
Dialogue: 0,0:53:06.08,0:53:10.28,Default,,0,0,0,,♪Dẫu đi bao lâu, sao trời hay bão cát♪
Dialogue: 0,0:53:10.28,0:53:14.48,Default,,0,0,0,,♪Ánh trăng là bộ giáp của ta♪
Dialogue: 0,0:53:14.48,0:53:17.80,Default,,0,0,0,,♪Ta mong sau này người mang theo vết sẹo♪
Dialogue: 0,0:53:17.80,0:53:21.76,Default,,0,0,0,,♪Cũng thử sống dịu dàng một phen♪
Dialogue: 0,0:53:21.92,0:53:25.44,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:53:25.44,0:53:33.08,Default,,0,0,0,,♪Yêu lại người từng căm hận♪
Dialogue: 0,0:53:33.08,0:53:40.48,Default,,0,0,0,,♪Kiếp phù du nhỏ, giấc mộng lớn♪
Dialogue: 0,0:53:40.48,0:53:49.12,Default,,0,0,0,,♪Xin đừng phụ lòng nhau♪
