Dialogue: 0,0:00:00.00,0:00:23.16,Default,,0,0,0,,Nhóm dịch đang gắng sức làm việc, mau chóng thay thế bản phụ đề cuối, cảm ơn bạn đã kiên nhẫn chờ đợi.
Dialogue: 0,0:00:23.16,0:00:26.92,Default,,0,0,0,,♪Đêm tối, trăng ướt, máu lạnh♪
Dialogue: 0,0:00:27.36,0:00:30.68,Default,,0,0,0,,♪Phơi bày trước\Nđôi mắt sợ ánh sáng của ta♪
Dialogue: 0,0:00:31.00,0:00:34.44,Default,,0,0,0,,♪Là sáng bừng hay ấm áp♪
Dialogue: 0,0:00:34.64,0:00:38.00,Default,,0,0,0,,♪Ta chỉ có thể suy đoán bằng trực giác♪
Dialogue: 0,0:00:38.88,0:00:46.12,Default,,0,0,0,,♪Ôi, tình yêu khuynh thế như ngọc,\Ntạo nên ta♪
Dialogue: 0,0:00:46.68,0:00:53.84,Default,,0,0,0,,♪Ôi, tơ tình vương vấn♪
Dialogue: 0,0:00:55.32,0:00:58.88,Default,,0,0,0,,♪Ta không sợ trên cõi đời này♪
Dialogue: 0,0:00:59.24,0:01:02.76,Default,,0,0,0,,♪Chúng sinh đối xử với ta ra sao♪
Dialogue: 0,0:01:03.40,0:01:06.56,Default,,0,0,0,,♪Đột phá, vùng vẫy♪
Dialogue: 0,0:01:06.88,0:01:11.16,Default,,0,0,0,,♪Làm sao để phân biệt chính tà, thiện ác♪
Dialogue: 0,0:01:11.60,0:01:14.88,Default,,0,0,0,,♪Từng có khoảnh khắc yếu đuối♪
Dialogue: 0,0:01:15.24,0:01:18.60,Default,,0,0,0,,♪Dùng nụ hôn tình yêu\Nđể vết thương lành lại♪
Dialogue: 0,0:01:19.12,0:01:22.56,Default,,0,0,0,,♪Sự tồn tại của ta♪
Dialogue: 0,0:01:23.08,0:01:29.60,Default,,0,0,0,,♪Sẽ không vì gai nhọn mà gãy cánh♪
Dialogue: 0,0:01:31.38,0:01:36.02,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:01:36.06,0:01:38.98,Default,,0,0,0,,[Tập 32]
Dialogue: 0,0:01:52.20,0:01:53.20,Default,,0,0,0,,Diệp Tịch Vụ,
Dialogue: 0,0:01:55.43,0:01:56.56,Default,,0,0,0,,là nàng sao?
Dialogue: 0,0:02:02.43,0:02:05.04,Default,,0,0,0,,[Xin hỏi Cù chưởng môn\Ncó từng nghe nói đến]
Dialogue: 0,0:02:05.12,0:02:07.07,Default,,0,0,0,,[một nữ tử tên Diệp Tịch Vụ không?]
Dialogue: 0,0:02:07.79,0:02:08.71,Default,,0,0,0,,[Hình như trong Tiên Môn chúng ta]
Dialogue: 0,0:02:08.71,0:02:10.08,Default,,0,0,0,,[cũng chưa từng nghe nói đến người này.]
Dialogue: 0,0:02:10.36,0:02:11.96,Default,,0,0,0,,[Cô ấy là\Nđệ tử của Hành Dương Tông chúng ta ư?]
Dialogue: 0,0:02:12.40,0:02:13.68,Default,,0,0,0,,[Tịch Vô không cha không mẹ,]
Dialogue: 0,0:02:13.80,0:02:15.96,Default,,0,0,0,,[thậm chí còn không phải\Nngười bình thường.]
Dialogue: 0,0:02:17.43,0:02:19.12,Default,,0,0,0,,[Rốt cuộc nàng là Diệp Tịch Vụ thật]
Dialogue: 0,0:02:19.52,0:02:21.08,Default,,0,0,0,,[hay lại như Tiêu Lẫm giả?]
Dialogue: 0,0:02:26.40,0:02:27.31,Default,,0,0,0,,Vị tiên hữu này,
Dialogue: 0,0:02:29.43,0:02:30.40,Default,,0,0,0,,huynh nhận nhầm người rồi,
Dialogue: 0,0:02:31.84,0:02:32.75,Default,,0,0,0,,ta không quen huynh.
Dialogue: 0,0:03:04.08,0:03:04.63,Default,,0,0,0,,Xin lỗi,
Dialogue: 0,0:03:05.28,0:03:06.43,Default,,0,0,0,,tại hạ mạo phạm rồi.
Dialogue: 0,0:03:07.59,0:03:08.87,Default,,0,0,0,,Tại hạ là Thương Cửu Mân,
Dialogue: 0,0:03:09.15,0:03:09.91,Default,,0,0,0,,đệ tử của Tiêu Dao Tông,
Dialogue: 0,0:03:10.63,0:03:11.36,Default,,0,0,0,,không biết
Dialogue: 0,0:03:12.08,0:03:13.63,Default,,0,0,0,,có thể hỏi tên họ tiên tử được không?
Dialogue: 0,0:03:18.52,0:03:19.71,Default,,0,0,0,,Hóa ra là Thương sư đệ.
Dialogue: 0,0:03:21.43,0:03:23.15,Default,,0,0,0,,Ta là Lê Tô Tô của Hành Dương Tông.
Dialogue: 0,0:03:29.36,0:03:31.59,Default,,0,0,0,,Nếu Thương sư đệ không có việc gì
Dialogue: 0,0:03:32.75,0:03:33.75,Default,,0,0,0,,thì ta xin phép đi trước.
Dialogue: 0,0:03:35.87,0:03:36.43,Default,,0,0,0,,Chờ đã.
Dialogue: 0,0:03:39.59,0:03:41.80,Default,,0,0,0,,Ta thường nghe Tịch Vô huynh\Nnhắc tới Lê sư tỷ,
Dialogue: 0,0:03:42.31,0:03:43.59,Default,,0,0,0,,nhưng vẫn chưa có dịp gặp mặt.
Dialogue: 0,0:03:44.24,0:03:45.15,Default,,0,0,0,,Hôm nay được gặp
Dialogue: 0,0:03:45.63,0:03:46.96,Default,,0,0,0,,quả thật là may mắn của tại hạ.
Dialogue: 0,0:03:47.75,0:03:48.52,Default,,0,0,0,,Sư tỷ
Dialogue: 0,0:03:49.19,0:03:51.28,Default,,0,0,0,,sao không đi cùng Tịch Vô sư huynh vậy?
Dialogue: 0,0:03:52.68,0:03:53.96,Default,,0,0,0,,Sư huynh có việc quan trọng khác,
Dialogue: 0,0:03:54.56,0:03:55.68,Default,,0,0,0,,không đồng hành cùng ta.
Dialogue: 0,0:03:56.31,0:03:58.52,Default,,0,0,0,,Vậy chi bằng chúng ta\Ncùng nhau đi tìm huynh ấy,
Dialogue: 0,0:03:59.19,0:04:00.80,Default,,0,0,0,,không chừng còn có thể\Nhái được vài quả táo.
Dialogue: 0,0:04:05.71,0:04:06.24,Default,,0,0,0,,Được.
Dialogue: 0,0:04:07.40,0:04:08.68,Default,,0,0,0,,Vừa hay ta đang định đi dạo xung quanh.
Dialogue: 0,0:04:09.28,0:04:11.84,Default,,0,0,0,,Đây là lần đầu tiên\Nta đến thần vực Thượng Thanh này,
Dialogue: 0,0:04:12.28,0:04:14.00,Default,,0,0,0,,những hình vẽ chạm trổ mái vòm, xà nhà,\Ncột trụ này
Dialogue: 0,0:04:14.36,0:04:15.36,Default,,0,0,0,,tinh xảo tráng lệ,
Dialogue: 0,0:04:15.87,0:04:18.12,Default,,0,0,0,,dọc đường đi chúng ta có thể\Nthưởng thức kỹ càng.
Dialogue: 0,0:04:21.87,0:04:24.43,Default,,0,0,0,,Nếu tiên tử có hứng thú\Nvới thần vực Thượng Thanh
Dialogue: 0,0:04:26.16,0:04:28.56,Default,,0,0,0,,thì ta từng nghe kể một câu chuyện\Nliên quan đến thần vực Thượng Thanh.
Dialogue: 0,0:04:29.68,0:04:30.56,Default,,0,0,0,,Vạn năm trước,
Dialogue: 0,0:04:31.63,0:04:32.80,Default,,0,0,0,,nơi đây có một chiến thần
Dialogue: 0,0:04:33.24,0:04:34.04,Default,,0,0,0,,tên là Minh Dạ.
Dialogue: 0,0:04:34.83,0:04:36.04,Default,,0,0,0,,Y cưới một vị
Dialogue: 0,0:04:36.75,0:04:38.68,Default,,0,0,0,,công chúa tộc Trai thông minh đáng yêu,
Dialogue: 0,0:04:39.38,0:04:42.63,Default,,0,0,0,,♪Mà vẫn dốc trọn kiếp này vì người♪
Dialogue: 0,0:04:42.63,0:04:43.63,Default,,0,0,0,,tên là Tang Tửu.
Dialogue: 0,0:04:43.90,0:04:46.70,Default,,0,0,0,,♪Một giấc mơ lớn, cùng đôi ta♪
Dialogue: 0,0:04:46.70,0:04:49.06,Default,,0,0,0,,♪Tơ tình quấn lấy hơi ấm còn sót lại♪
Dialogue: 0,0:04:49.10,0:04:50.39,Default,,0,0,0,,♪Tình yêu đã sớm bén rễ♪
Dialogue: 0,0:04:50.39,0:04:51.56,Default,,0,0,0,,Tuy ban đầu
Dialogue: 0,0:04:51.95,0:04:53.43,Default,,0,0,0,,Minh Dạ rất chống đối cuộc hôn nhân này,
Dialogue: 0,0:04:54.24,0:04:55.12,Default,,0,0,0,,nhưng về sau
Dialogue: 0,0:04:55.60,0:04:57.07,Default,,0,0,0,,y đã dần dần bị Tang Tửu thu hút.
Dialogue: 0,0:04:57.92,0:04:59.80,Default,,0,0,0,,Nhưng y còn chưa kịp đáp lại Tang Tửu
Dialogue: 0,0:05:00.43,0:05:02.83,Default,,0,0,0,,thì cô ấy đã hiểu nhầm là\NMinh Dạ không có tình cảm với mình,
Dialogue: 0,0:05:03.87,0:05:05.39,Default,,0,0,0,,rồi rời khỏi thần vực Thượng Thanh.
Dialogue: 0,0:05:06.80,0:05:07.87,Default,,0,0,0,,Nếu đã hối hận
Dialogue: 0,0:05:08.36,0:05:10.16,Default,,0,0,0,,thì sao Minh Dạ không đuổi theo Tang Tửu?
Dialogue: 0,0:05:10.27,0:05:11.75,Default,,0,0,0,,Sao sư tỷ biết y không đuổi theo?
Dialogue: 0,0:05:12.80,0:05:14.51,Default,,0,0,0,,Khi ấy đúng vào lúc đại chiến Thần Ma,
Dialogue: 0,0:05:14.63,0:05:15.95,Default,,0,0,0,,thiên trụ còn đã bị đánh gãy.
Dialogue: 0,0:05:16.51,0:05:18.27,Default,,0,0,0,,Minh Dạ là chiến thần của thần vực này,
Dialogue: 0,0:05:19.31,0:05:21.83,Default,,0,0,0,,y biết bản thân trên chiến trường\Nsẽ lành ít dữ nhiều,
Dialogue: 0,0:05:22.72,0:05:24.48,Default,,0,0,0,,sợ điều này sẽ khiến Tang Tửu đau lòng,
Dialogue: 0,0:05:25.43,0:05:26.12,Default,,0,0,0,,cho nên
Dialogue: 0,0:05:27.39,0:05:29.04,Default,,0,0,0,,mới nhẫn nhịn không đi tìm cô ấy.
Dialogue: 0,0:05:30.39,0:05:31.87,Default,,0,0,0,,Nhưng trong lòng Minh Dạ,
Dialogue: 0,0:05:32.63,0:05:34.56,Default,,0,0,0,,chỉ cần Tang Tửu bình an vui vẻ
Dialogue: 0,0:05:35.75,0:05:36.51,Default,,0,0,0,,là tốt rồi.
Dialogue: 0,0:05:42.00,0:05:42.72,Default,,0,0,0,,Được rồi,
Dialogue: 0,0:05:44.36,0:05:45.36,Default,,0,0,0,,đã kể xong rồi,
Dialogue: 0,0:05:48.07,0:05:49.24,Default,,0,0,0,,chúng ta đi tìm Tiêu Lẫm thôi.
Dialogue: 0,0:05:50.83,0:05:51.43,Default,,0,0,0,,Được.
Dialogue: 0,0:05:57.90,0:06:01.46,Default,,0,0,0,,♪Người có biết linh hồn sáng suốt♪
Dialogue: 0,0:06:01.50,0:06:04.82,Default,,0,0,0,,♪Quanh quẩn bên ranh giới đắm chìm♪
Dialogue: 0,0:06:06.04,0:06:06.87,Default,,0,0,0,,Diệp Tịch Vụ.
Dialogue: 0,0:06:08.42,0:06:11.98,Default,,0,0,0,,♪Cũng không chịu bay xa♪
Dialogue: 0,0:06:13.48,0:06:14.48,Default,,0,0,0,,Đúng là nàng rồi.
Dialogue: 0,0:06:16.10,0:06:19.18,Default,,0,0,0,,♪Như nhát kiếm xuyên tận xương tuỷ♪
Dialogue: 0,0:06:20.36,0:06:21.51,Default,,0,0,0,,Ta không biết đệ đang nói gì.
Dialogue: 0,0:06:22.07,0:06:22.83,Default,,0,0,0,,Ta nói rồi,
Dialogue: 0,0:06:23.43,0:06:24.24,Default,,0,0,0,,đệ nhận nhầm người rồi.
Dialogue: 0,0:06:32.63,0:06:34.92,Default,,0,0,0,,[Tại sao chàng lại\Nxuất hiện đúng vào lúc này?]
Dialogue: 0,0:06:36.75,0:06:38.72,Default,,0,0,0,,[Bây giờ ta còn chưa thể\Nthừa nhận quen biết chàng.]
Dialogue: 0,0:06:40.07,0:06:41.00,Default,,0,0,0,,[Xin lỗi,]
Dialogue: 0,0:06:42.56,0:06:43.60,Default,,0,0,0,,[Đàm Đài Tẫn.]
Dialogue: 0,0:06:44.46,0:06:47.74,Default,,0,0,0,,♪Năm tháng sóng gió của ta♪
Dialogue: 0,0:06:47.82,0:06:51.22,Default,,0,0,0,,♪Ảo giác giấc mộng sống bên nhau♪
Dialogue: 0,0:06:51.26,0:06:53.70,Default,,0,0,0,,♪Sao lại có muôn ngàn tâm trạng♪
Dialogue: 0,0:07:03.12,0:07:04.04,Default,,0,0,0,,Ở đó.
Dialogue: 0,0:07:06.24,0:07:08.75,Default,,0,0,0,,Không ngờ vạn năm nay Thủy Kính khô cạn,
Dialogue: 0,0:07:09.16,0:07:11.39,Default,,0,0,0,,lại khiến ấn Tẩy Tủy hiện ra.
Dialogue: 0,0:07:11.63,0:07:12.68,Default,,0,0,0,,Nếu không phải như vậy
Dialogue: 0,0:07:12.87,0:07:15.27,Default,,0,0,0,,thì chúng ta có tìm thêm mười năm nữa\Ncó khi cũng không phát hiện được.
Dialogue: 0,0:07:15.27,0:07:16.04,Default,,0,0,0,,Ra tay đi.
Dialogue: 0,0:07:17.68,0:07:18.48,Default,,0,0,0,,Khoan đã.
Dialogue: 0,0:07:19.24,0:07:21.27,Default,,0,0,0,,Ra tay trong thần vực Thượng Thanh
Dialogue: 0,0:07:21.63,0:07:22.92,Default,,0,0,0,,thì chúng ta chịu thiệt rất nhiều.
Dialogue: 0,0:07:24.43,0:07:26.56,Default,,0,0,0,,Phải dương Đông kích Tây trước đã.
Dialogue: 0,0:07:27.00,0:07:28.27,Default,,0,0,0,,Ngươi dụ bọn chúng đi,
Dialogue: 0,0:07:28.92,0:07:30.92,Default,,0,0,0,,tránh làm loạn kế họach lớn của chúng ta.
Dialogue: 0,0:07:32.83,0:07:35.87,Default,,0,0,0,,Dạ Mị và Phong Thỉ đã ở dưới chân núi\Nchờ lệnh rồi,
Dialogue: 0,0:07:36.27,0:07:38.56,Default,,0,0,0,,giờ ta sẽ đi hội họp với chúng,
Dialogue: 0,0:07:38.87,0:07:40.95,Default,,0,0,0,,lên Hành Dương Tông chiến một trận
Dialogue: 0,0:07:41.19,0:07:42.36,Default,,0,0,0,,cũng sảng khoái đấy.
Dialogue: 0,0:08:25.31,0:08:26.87,Default,,0,0,0,,Ta là Nguyệt Phù Nhai của Hành Dương Tông,
Dialogue: 0,0:08:27.12,0:08:28.27,Default,,0,0,0,,hôm nay cuối cùng cũng có cơ hội
Dialogue: 0,0:08:28.43,0:08:29.68,Default,,0,0,0,,gặp đám tà ma các ngươi.
Dialogue: 0,0:08:30.00,0:08:32.60,Default,,0,0,0,,Nguyệt Phù Nhai ta\Nphải chết chung với các ngươi.
Dialogue: 0,0:08:40.55,0:08:41.15,Default,,0,0,0,,Cẩn thận.
Dialogue: 0,0:08:41.44,0:08:42.51,Default,,0,0,0,,Huynh đến cứu ta sao?
Dialogue: 0,0:08:42.96,0:08:43.87,Default,,0,0,0,,Huynh tên là gì?
Dialogue: 0,0:08:48.36,0:08:49.20,Default,,0,0,0,,Huynh định đi đâu?
Dialogue: 0,0:08:49.91,0:08:51.36,Default,,0,0,0,,Ta có thể đi cùng huynh không?
Dialogue: 0,0:08:51.79,0:08:53.44,Default,,0,0,0,,Nơi này đáng sợ quá đi.
Dialogue: 0,0:09:15.63,0:09:16.32,Default,,0,0,0,,Đi đi.
Dialogue: 0,0:09:23.87,0:09:24.84,Default,,0,0,0,,Cuối cùng cũng đến rồi.
Dialogue: 0,0:09:25.27,0:09:26.67,Default,,0,0,0,,Mau mở đại trận hộ sơn.
Dialogue: 0,0:10:19.27,0:10:20.75,Default,,0,0,0,,Đến thử kiếm của đạo sĩ ta đây.
Dialogue: 0,0:10:20.75,0:10:22.24,Default,,0,0,0,,Nhất định sẽ khiến ngươi\Ncó đi không có về.
Dialogue: 0,0:10:22.24,0:10:23.15,Default,,0,0,0,,Tiêu Dao Kiếm Trận,
Dialogue: 0,0:10:23.24,0:10:24.24,Default,,0,0,0,,Vân Sơn Thập Cảnh!
Dialogue: 0,0:10:31.84,0:10:32.44,Default,,0,0,0,,Dừng tay.
Dialogue: 0,0:10:35.79,0:10:38.27,Default,,0,0,0,,Nguyên thần của ngươi\Ntrông có vẻ rất ngon.
Dialogue: 0,0:11:08.36,0:11:09.48,Default,,0,0,0,,Yêu nghiệt dừng tay.
Dialogue: 0,0:11:12.32,0:11:13.96,Default,,0,0,0,,Còn không mau ngoan ngoãn chịu trói.
Dialogue: 0,0:11:27.67,0:11:29.03,Default,,0,0,0,,Trận pháp Hàng Ma?
Dialogue: 0,0:11:29.12,0:11:30.84,Default,,0,0,0,,Đây chính là cái bẫy của các ngươi?
Dialogue: 0,0:11:30.91,0:11:32.63,Default,,0,0,0,,Bọn ta đã đợi ngươi lâu lắm rồi.
Dialogue: 0,0:11:34.00,0:11:34.75,Default,,0,0,0,,Lập trận.
Dialogue: 0,0:11:59.36,0:12:01.79,Default,,0,0,0,,Còn tưởng các ngươi\Ncó bản lĩnh lớn nhường nào,
Dialogue: 0,0:12:02.36,0:12:04.60,Default,,0,0,0,,không ngờ cũng chỉ có vậy.
Dialogue: 0,0:12:05.36,0:12:07.51,Default,,0,0,0,,Lúc bổn tọa đi theo Ma Thần,
Dialogue: 0,0:12:09.12,0:12:11.63,Default,,0,0,0,,Tắc Trạch, Sơ Hoàng
Dialogue: 0,0:12:12.27,0:12:14.51,Default,,0,0,0,,mới xứng đánh nhau với ta.
Dialogue: 0,0:13:20.27,0:13:21.08,Default,,0,0,0,,Kinh Diệt,
Dialogue: 0,0:13:21.32,0:13:23.12,Default,,0,0,0,,chớ ăn nói ngông cuồng.
Dialogue: 0,0:13:23.60,0:13:26.63,Default,,0,0,0,,Hôm nay nơi đây\Nsẽ là mồ chôn thây của ngươi.
Dialogue: 0,0:13:32.03,0:13:32.91,Default,,0,0,0,,Tự Anh đang ở đâu?
Dialogue: 0,0:13:33.08,0:13:34.91,Default,,0,0,0,,Tại sao hôm nay\Nchỉ có mình Kinh Diệt ở đây?
Dialogue: 0,0:13:39.79,0:13:41.00,Default,,0,0,0,,[Sao lại gây động tĩnh lớn như vậy?]
Dialogue: 0,0:13:41.44,0:13:42.84,Default,,0,0,0,,[E là Kinh Diệt\Nkhông trì hoãn được nữa rồi.]
Dialogue: 0,0:13:43.03,0:13:44.15,Default,,0,0,0,,[Ta phải nhanh lên.]
Dialogue: 0,0:13:54.32,0:13:55.75,Default,,0,0,0,,[Ta nhớ trong Bát Nhã Phù Sinh,]
Dialogue: 0,0:13:56.00,0:13:56.96,Default,,0,0,0,,[Minh Dạ phong ấn]
Dialogue: 0,0:13:56.96,0:13:58.48,Default,,0,0,0,,[ấn Tẩy Tủy trên linh đài kia.]
Dialogue: 0,0:14:05.84,0:14:07.84,Default,,0,0,0,,[Ấn Tẩy Tủy\Ntương thông với khí tức của Ma Thần]
Dialogue: 0,0:14:08.36,0:14:09.72,Default,,0,0,0,,[uy lực không thể coi thường.]
Dialogue: 0,0:14:10.55,0:14:11.75,Default,,0,0,0,,[Đã không thể phá hủy]
Dialogue: 0,0:14:12.27,0:14:13.20,Default,,0,0,0,,[thì bây giờ]
Dialogue: 0,0:14:14.00,0:14:15.79,Default,,0,0,0,,[chỉ đành phong ấn nó dưới Thủy Kính này.]
Dialogue: 0,0:14:16.08,0:14:18.39,Default,,0,0,0,,[Mượn thần lực vĩnh viễn trấn giữ ở đây.]
Dialogue: 0,0:14:32.36,0:14:32.87,Default,,0,0,0,,Không hay rồi,
Dialogue: 0,0:14:33.32,0:14:34.27,Default,,0,0,0,,linh đài có động tĩnh khác thường.
Dialogue: 0,0:14:34.72,0:14:36.00,Default,,0,0,0,,Lão Cù, đứng yên.
Dialogue: 0,0:14:36.63,0:14:38.15,Default,,0,0,0,,Các đệ tử ở trên đã về rồi,
Dialogue: 0,0:14:38.39,0:14:40.12,Default,,0,0,0,,có lẽ là chiêu đánh lạc hướng của chúng.
Dialogue: 0,0:14:40.63,0:14:41.79,Default,,0,0,0,,Tiêu diệt tên này trước đã.
Dialogue: 0,0:14:42.12,0:14:43.15,Default,,0,0,0,,Đừng mắc bẫy của chúng.
Dialogue: 0,0:14:52.03,0:14:52.84,Default,,0,0,0,,Yêu ma dừng tay.
Dialogue: 0,0:14:58.72,0:14:59.63,Default,,0,0,0,,Có ta ở đây,
Dialogue: 0,0:14:59.84,0:15:01.12,Default,,0,0,0,,ngươi đừng hòng mang ấn Tẩy Tủy đi.
Dialogue: 0,0:15:13.60,0:15:14.48,Default,,0,0,0,,[Là cô ta.]
Dialogue: 0,0:15:16.00,0:15:17.27,Default,,0,0,0,,[Vậy để ta giết ngươi.]
Dialogue: 0,0:15:20.27,0:15:21.39,Default,,0,0,0,,[Nơi đây trước là chỗ ở của thần linh,]
Dialogue: 0,0:15:21.60,0:15:22.75,Default,,0,0,0,,[sao có thể để ngươi\Nlàm chuyện ác cho được.]
Dialogue: 0,0:15:25.15,0:15:26.32,Default,,0,0,0,,[Chỉ dựa vào ngươi ư?]
Dialogue: 0,0:15:26.96,0:15:28.72,Default,,0,0,0,,[Mười hai vị thần liều cả tính mạng]
Dialogue: 0,0:15:28.72,0:15:30.24,Default,,0,0,0,,[cũng không ngăn được tôn thượng.]
Dialogue: 0,0:15:30.63,0:15:32.03,Default,,0,0,0,,[Ngươi là cái thá gì chứ?]
Dialogue: 0,0:15:32.91,0:15:35.32,Default,,0,0,0,,[Ấn Tẩy Tủy là tim của Ma Thần,]
Dialogue: 0,0:15:35.91,0:15:38.15,Default,,0,0,0,,[cuối cùng sẽ trở về với tôn thượng.]
Dialogue: 0,0:17:03.15,0:17:05.72,Default,,0,0,0,,[Ngươi vốn là tà cốt bẩm sinh,]
Dialogue: 0,0:17:05.92,0:17:08.55,Default,,0,0,0,,[định trước là sẽ trở thành Ma Thần.]
Dialogue: 0,0:17:09.88,0:17:11.48,Default,,0,0,0,,[Chàng là Ma Thần.]
Dialogue: 0,0:17:13.40,0:17:15.40,Default,,0,0,0,,Chàng vốn dĩ chính là
Dialogue: 0,0:17:17.27,0:17:18.96,Default,,0,0,0,,lời nguyền lớn nhất thế gian này.
Dialogue: 0,0:17:24.96,0:17:27.64,Default,,0,0,0,,[Đây là số mệnh của ngươi.]
Dialogue: 0,0:17:31.48,0:17:33.07,Default,,0,0,0,,[Thành ma hay thần]
Dialogue: 0,0:17:36.68,0:17:38.35,Default,,0,0,0,,[chỉ trong một suy nghĩ của ngươi.]
Dialogue: 0,0:17:52.40,0:17:53.20,Default,,0,0,0,,[Minh Dạ,]
Dialogue: 0,0:17:54.35,0:17:56.92,Default,,0,0,0,,[tại sao ngươi lại chọn ta\Ntiến vào Bát Nhã Phù Sinh?]
Dialogue: 0,0:18:37.16,0:18:37.83,Default,,0,0,0,,Hôm nay
Dialogue: 0,0:18:38.11,0:18:39.51,Default,,0,0,0,,ngươi đừng hòng mang được ấn Tẩy Tủy đi.
Dialogue: 0,0:18:40.03,0:18:41.92,Default,,0,0,0,,Một đệ tử Tiên Môn nhỏ nhoi
Dialogue: 0,0:18:42.35,0:18:44.88,Default,,0,0,0,,mà lại có thể phong ấn ấn Tẩy Tủy.
Dialogue: 0,0:20:17.24,0:20:18.20,Default,,0,0,0,,Tiêu Dao Kiếm Ý.
Dialogue: 0,0:20:18.27,0:20:18.88,Default,,0,0,0,,Phá!
Dialogue: 0,0:21:36.31,0:21:37.00,Default,,0,0,0,,Không đúng,
Dialogue: 0,0:21:37.35,0:21:38.31,Default,,0,0,0,,linh đài có biến.
Dialogue: 0,0:22:17.83,0:22:18.79,Default,,0,0,0,,Thương Cửu Mân.
Dialogue: 0,0:22:38.64,0:22:39.31,Default,,0,0,0,,[Đây là]
Dialogue: 0,0:22:40.16,0:22:41.07,Default,,0,0,0,,[tôn thượng.]
Dialogue: 0,0:22:56.79,0:22:57.51,Default,,0,0,0,,Thương Cửu Mân.
Dialogue: 0,0:22:58.75,0:23:00.31,Default,,0,0,0,,Đừng để bị ma khí mê hoặc,
Dialogue: 0,0:23:00.83,0:23:01.96,Default,,0,0,0,,mau tỉnh lại.
Dialogue: 0,0:23:08.03,0:23:09.40,Default,,0,0,0,,Năm trăm năm rồi,
Dialogue: 0,0:23:10.35,0:23:12.51,Default,,0,0,0,,cuối cùng ta cũng tìm được ma thai.
Dialogue: 0,0:23:24.51,0:23:26.24,Default,,0,0,0,,[Xem ra chúng đã tìm được rồi,]
Dialogue: 0,0:23:26.96,0:23:29.16,Default,,0,0,0,,[cuối cùng cũng gieo bùa chú vào trong.]
Dialogue: 0,0:23:47.03,0:23:47.96,Default,,0,0,0,,[Ma Thần,]
Dialogue: 0,0:23:48.92,0:23:51.27,Default,,0,0,0,,[ta đoán ngươi cũng không ngờ]
Dialogue: 0,0:23:51.88,0:23:53.48,Default,,0,0,0,,[kẻ phá giải phong ấn cho ta]
Dialogue: 0,0:23:53.96,0:23:56.44,Default,,0,0,0,,[lại là hai thuộc hạ\Ntrung thành nhất của ngươi.]
Dialogue: 0,0:23:58.11,0:23:59.75,Default,,0,0,0,,[Nay ta đã lấy lại được]
Dialogue: 0,0:24:00.64,0:24:02.68,Default,,0,0,0,,[sự tự do bị ngươi tước đoạt.]
Dialogue: 0,0:24:08.11,0:24:09.72,Default,,0,0,0,,[Đàm Đài Tẫn,]
Dialogue: 0,0:24:10.96,0:24:12.75,Default,,0,0,0,,[ngươi vốn là ma thai,]
Dialogue: 0,0:24:14.00,0:24:16.35,Default,,0,0,0,,[sao có thể chống lại ý chí của ta được.]
Dialogue: 0,0:24:19.00,0:24:22.20,Default,,0,0,0,,[Chờ ấn Tẩy Tủy\Nhòa vào tâm mạch của ngươi,]
Dialogue: 0,0:24:24.03,0:24:24.79,Default,,0,0,0,,[ta]
Dialogue: 0,0:24:26.31,0:24:28.16,Default,,0,0,0,,[sẽ thức tỉnh.]
Dialogue: 0,0:24:32.40,0:24:33.27,Default,,0,0,0,,Thương Cửu Mân.
Dialogue: 0,0:24:34.11,0:24:35.07,Default,,0,0,0,,Thương Cửu Mân.
Dialogue: 0,0:24:35.83,0:24:37.00,Default,,0,0,0,,Mau tỉnh lại đi.
Dialogue: 0,0:24:39.64,0:24:40.88,Default,,0,0,0,,Tỉnh lại!
Dialogue: 0,0:24:43.72,0:24:44.40,Default,,0,0,0,,Không.
Dialogue: 0,0:24:45.07,0:24:46.11,Default,,0,0,0,,Đừng hòng.
Dialogue: 0,0:24:54.51,0:24:55.92,Default,,0,0,0,,[Là sức mạnh của tôn thượng.]
Dialogue: 0,0:24:56.92,0:24:57.79,Default,,0,0,0,,Thương Cửu Mân,
Dialogue: 0,0:24:57.79,0:24:58.72,Default,,0,0,0,,ổn định tinh thần.
Dialogue: 0,0:24:59.11,0:25:00.20,Default,,0,0,0,,Đừng để tẩu hỏa nhập ma.
Dialogue: 0,0:25:01.35,0:25:03.27,Default,,0,0,0,,[Kế họach của tôn thượng\Nquả là huyền diệu,]
Dialogue: 0,0:25:03.55,0:25:04.92,Default,,0,0,0,,[hôm nay chưa rõ tình hình,]
Dialogue: 0,0:25:05.11,0:25:06.59,Default,,0,0,0,,[không tiện dây dưa lâu.]
Dialogue: 0,0:25:06.79,0:25:08.35,Default,,0,0,0,,[Chờ ma thai hoàn toàn thức tỉnh,]
Dialogue: 0,0:25:08.55,0:25:10.55,Default,,0,0,0,,[lại đến đón tôn thượng về Hoang Uyên\Ncũng chưa muộn.]
Dialogue: 0,0:25:12.48,0:25:13.79,Default,,0,0,0,,Vâng, thưa tôn thượng.
Dialogue: 0,0:25:14.27,0:25:16.35,Default,,0,0,0,,Ấn Tẩy Tủy vốn thuộc về ngài,
Dialogue: 0,0:25:16.79,0:25:18.31,Default,,0,0,0,,thuộc hạ xin cáo lui trước.
Dialogue: 0,0:25:36.16,0:25:38.83,Default,,0,0,0,,[Ma khí này\Nlà ấn Tẩy Tủy hòa vào tâm mạch.]
Dialogue: 0,0:26:01.72,0:26:03.59,Default,,0,0,0,,Thương Cửu Mân, Thương Cửu Mân.
Dialogue: 0,0:26:03.83,0:26:06.07,Default,,0,0,0,,Đừng để vũ khí Ma tộc mê hoặc,\Nmau tỉnh lại.
Dialogue: 0,0:26:06.51,0:26:08.27,Default,,0,0,0,,Ấn Tẩy Tủy đã nối liền\Nvới tâm mạch của đệ,
Dialogue: 0,0:26:08.59,0:26:09.72,Default,,0,0,0,,đệ không muốn sống nữa sao?
Dialogue: 0,0:26:44.51,0:26:45.27,Default,,0,0,0,,Thương Cửu Mân,
Dialogue: 0,0:26:46.11,0:26:46.72,Default,,0,0,0,,tỉnh lại đi.
Dialogue: 0,0:26:48.11,0:26:48.96,Default,,0,0,0,,Thương Cửu Mân.
Dialogue: 0,0:28:25.51,0:28:26.27,Default,,0,0,0,,Tự Anh?
Dialogue: 0,0:28:28.16,0:28:28.96,Default,,0,0,0,,Đến đúng lúc lắm,
Dialogue: 0,0:28:29.72,0:28:32.24,Default,,0,0,0,,hôm nay tiêu diệt hết cả bọn luôn.
Dialogue: 0,0:28:40.59,0:28:41.11,Default,,0,0,0,,[Kinh Diệt,]
Dialogue: 0,0:28:41.48,0:28:42.07,Default,,0,0,0,,[đừng hiếu chiến,]
Dialogue: 0,0:28:42.44,0:28:43.03,Default,,0,0,0,,[chúng ta đi.]
Dialogue: 0,0:28:52.27,0:28:53.55,Default,,0,0,0,,Đúng là không ngờ
Dialogue: 0,0:28:54.48,0:28:55.75,Default,,0,0,0,,lại để chúng chạy thoát.
Dialogue: 0,0:28:58.96,0:29:01.40,Default,,0,0,0,,[Chẳng lẽ có người đã tiết lộ\Nkế họach của chúng ta?]
Dialogue: 0,0:29:05.51,0:29:08.00,Default,,0,0,0,,Cuộc so tài giữa các Tiên Môn lần này\Nbị lộ tin tức,
Dialogue: 0,0:29:08.40,0:29:09.64,Default,,0,0,0,,khiến nhị ma lợi dụng sơ hở,
Dialogue: 0,0:29:09.79,0:29:10.68,Default,,0,0,0,,là do ta sơ suất.
Dialogue: 0,0:29:11.68,0:29:13.75,Default,,0,0,0,,Không ngờ chúng đến thần vực Thượng Thanh
Dialogue: 0,0:29:14.35,0:29:15.72,Default,,0,0,0,,là để đánh cắp vũ khí Ma tộc.
Dialogue: 0,0:29:17.75,0:29:18.64,Default,,0,0,0,,Thôi vậy.
Dialogue: 0,0:29:18.72,0:29:20.96,Default,,0,0,0,,Lão Cù à,\Nchuyện này cũng không trách ông được.
Dialogue: 0,0:29:21.27,0:29:22.92,Default,,0,0,0,,Lo chuyện lớn thì dễ sơ suất chuyện nhỏ.
Dialogue: 0,0:29:24.24,0:29:26.31,Default,,0,0,0,,Ai mà ngờ vũ khí Ma tộc là ấn Tẩy Tủy
Dialogue: 0,0:29:26.31,0:29:28.79,Default,,0,0,0,,lại được giấu trên linh đài\Ncủa thần vực Thượng Thanh cơ chứ.
Dialogue: 0,0:29:29.07,0:29:31.31,Default,,0,0,0,,May lần này Cửu Mân và Tô Tô
Dialogue: 0,0:29:31.92,0:29:34.24,Default,,0,0,0,,liều chết giành lại ma ấn cho chúng ta,
Dialogue: 0,0:29:35.40,0:29:37.92,Default,,0,0,0,,không thì hậu quả khó mà lường được.
Dialogue: 0,0:29:39.40,0:29:41.31,Default,,0,0,0,,Nhị ma cướp đoạt không thành,
Dialogue: 0,0:29:42.92,0:29:44.83,Default,,0,0,0,,e là sẽ lại có gian kế khác.
Dialogue: 0,0:29:48.88,0:29:49.44,Default,,0,0,0,,Sư phụ,
Dialogue: 0,0:29:49.72,0:29:51.00,Default,,0,0,0,,kết giới phòng bị\Nngoài sơn môn có biến động,
Dialogue: 0,0:29:51.27,0:29:52.72,Default,,0,0,0,,hình như có Ma tộc xâm phạm.
Dialogue: 0,0:29:58.51,0:29:59.24,Default,,0,0,0,,Ngươi là ai
Dialogue: 0,0:29:59.27,0:30:00.31,Default,,0,0,0,,mà dám xông vào\Nnơi trọng yếu của Tiên Môn?
Dialogue: 0,0:30:24.68,0:30:25.79,Default,,0,0,0,,Các con lui xuống hết đi.
Dialogue: 0,0:30:37.44,0:30:38.20,Default,,0,0,0,,Lão huynh,
Dialogue: 0,0:30:39.20,0:30:40.51,Default,,0,0,0,,đã lâu không gặp.
Dialogue: 0,0:30:44.83,0:30:46.68,Default,,0,0,0,,Đế huynh bị Ma Thần giam cầm vạn năm,
Dialogue: 0,0:30:47.03,0:30:48.40,Default,,0,0,0,,cuối cùng hôm nay đã được trở về,
Dialogue: 0,0:30:48.55,0:30:50.07,Default,,0,0,0,,đúng là đáng mừng.
Dialogue: 0,0:30:52.11,0:30:53.35,Default,,0,0,0,,Một vạn năm qua
Dialogue: 0,0:30:53.55,0:30:55.20,Default,,0,0,0,,giống như gió thoảng mây bay.
Dialogue: 0,0:30:55.72,0:30:57.51,Default,,0,0,0,,Ta thấy trang phục Tiên Môn này
Dialogue: 0,0:30:57.51,0:30:58.75,Default,,0,0,0,,hợp với huynh lắm đấy.
Dialogue: 0,0:31:00.48,0:31:01.92,Default,,0,0,0,,Huynh tạm thời ở lại đây đi,
Dialogue: 0,0:31:01.92,0:31:03.68,Default,,0,0,0,,cũng tiện cho hai người đoàn tụ với nhau.
Dialogue: 0,0:31:08.48,0:31:09.48,Default,,0,0,0,,Cha gọi con tới
Dialogue: 0,0:31:09.48,0:31:10.40,Default,,0,0,0,,có chuyện gì?
Dialogue: 0,0:31:12.16,0:31:13.75,Default,,0,0,0,,Nếu là vì vết thương của Thương Cửu Mân,
Dialogue: 0,0:31:13.83,0:31:15.48,Default,,0,0,0,,vừa nãy con đã giao Thương Cửu Mân
Dialogue: 0,0:31:16.11,0:31:18.16,Default,,0,0,0,,cho Triệu Du bá bá dẫn về nghỉ ngơi
Dialogue: 0,0:31:18.16,0:31:19.31,Default,,0,0,0,,theo lệnh cha rồi.
Dialogue: 0,0:31:21.92,0:31:22.75,Default,,0,0,0,,Con gái.
Dialogue: 0,0:31:28.72,0:31:29.68,Default,,0,0,0,,[Tô Tô.]
Dialogue: 0,0:31:31.96,0:31:32.88,Default,,0,0,0,,Ông là ai?
Dialogue: 0,0:31:35.16,0:31:36.79,Default,,0,0,0,,Tới bên ta.
Dialogue: 0,0:31:38.20,0:31:39.83,Default,,0,0,0,,Vì sao ông biết tên ta?
Dialogue: 0,0:31:41.03,0:31:42.11,Default,,0,0,0,,Hóa ra là ông.
Dialogue: 0,0:31:44.20,0:31:44.88,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:31:45.35,0:31:46.40,Default,,0,0,0,,hai người quen nhau sao?
Dialogue: 0,0:31:47.68,0:31:49.07,Default,,0,0,0,,Con từng tới Hoang Uyên
Dialogue: 0,0:31:49.24,0:31:50.27,Default,,0,0,0,,nói chuyện với ông ấy.
Dialogue: 0,0:31:53.20,0:31:55.68,Default,,0,0,0,,Lúc đó con bất cẩn ngã xuống,
Dialogue: 0,0:31:55.92,0:31:57.44,Default,,0,0,0,,nếu không phải ta phát hiện kịp thời
Dialogue: 0,0:31:57.83,0:32:00.11,Default,,0,0,0,,thì con đã tan xác từ lâu rồi.
Dialogue: 0,0:32:00.11,0:32:01.44,Default,,0,0,0,,Tô Tô vô cùng cảm kích
Dialogue: 0,0:32:01.79,0:32:02.96,Default,,0,0,0,,ơn cứu mạng của tiền bối.
Dialogue: 0,0:32:04.27,0:32:05.35,Default,,0,0,0,,Xem ra hai người
Dialogue: 0,0:32:05.44,0:32:06.68,Default,,0,0,0,,có duyên thật đấy.
Dialogue: 0,0:32:07.88,0:32:08.44,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:32:09.24,0:32:09.88,Default,,0,0,0,,con lại đây,
Dialogue: 0,0:32:13.11,0:32:15.07,Default,,0,0,0,,mau quỳ xuống khấu đầu với phụ thân con,
Dialogue: 0,0:32:15.55,0:32:17.11,Default,,0,0,0,,báo đáp ơn sinh thành của huynh ấy.
Dialogue: 0,0:32:18.64,0:32:19.20,Default,,0,0,0,,Không,
Dialogue: 0,0:32:22.59,0:32:24.35,Default,,0,0,0,,tuy là cha ruột của con bé,
Dialogue: 0,0:32:24.79,0:32:25.51,Default,,0,0,0,,nhưng
Dialogue: 0,0:32:26.07,0:32:28.20,Default,,0,0,0,,ta chưa ngày nào\Nthực hiện chức trách nuôi dưỡng con bé.
Dialogue: 0,0:32:29.92,0:32:31.48,Default,,0,0,0,,Hôm nay được gặp lại
Dialogue: 0,0:32:32.07,0:32:33.72,Default,,0,0,0,,là ông trời đã thương tiếc ta rồi.
Dialogue: 0,0:32:36.64,0:32:38.11,Default,,0,0,0,,Phụ thân?
Dialogue: 0,0:32:39.44,0:32:40.27,Default,,0,0,0,,Cha,
Dialogue: 0,0:32:40.59,0:32:41.79,Default,,0,0,0,,chuyện này là sao?
Dialogue: 0,0:32:42.68,0:32:44.31,Default,,0,0,0,,Nói ra thì dài lắm.
Dialogue: 0,0:32:45.88,0:32:47.51,Default,,0,0,0,,Trong trận chiến trừ ma vạn năm trước,
Dialogue: 0,0:32:48.27,0:32:50.48,Default,,0,0,0,,Quỷ chủ phản bội đánh Ma Thần trọng thương
Dialogue: 0,0:32:51.07,0:32:53.40,Default,,0,0,0,,nhưng lại bị Ma Thần\Nphong ấn dưới Hoang Uyên.
Dialogue: 0,0:32:54.83,0:32:57.35,Default,,0,0,0,,[Hàng chục năm trước,\Nta chiến đấu với ma tu,]
Dialogue: 0,0:32:57.59,0:32:59.11,Default,,0,0,0,,[trọng thương rơi xuống Hoang Uyên,]
Dialogue: 0,0:32:59.31,0:33:01.16,Default,,0,0,0,,[suýt thì bị vạn yêu cắn xé.]
Dialogue: 0,0:33:02.68,0:33:05.59,Default,,0,0,0,,[May mà ta rơi xuống\Nbên ngoài động của Đế Miện.]
Dialogue: 0,0:33:05.96,0:33:07.68,Default,,0,0,0,,[Huynh ấy dốc hết sức\Ndùng ma khí che chắn cho ta,]
Dialogue: 0,0:33:07.68,0:33:08.96,Default,,0,0,0,,[đuổi yêu ma đi.]
Dialogue: 0,0:33:09.88,0:33:12.11,Default,,0,0,0,,[Nhờ vậy ta mới may mắn\Ngiữ được một mạng.]
Dialogue: 0,0:33:13.64,0:33:15.16,Default,,0,0,0,,[Để báo đáp ơn cứu mạng,]
Dialogue: 0,0:33:15.44,0:33:16.48,Default,,0,0,0,,[ta đã hứa với huynh ấy]
Dialogue: 0,0:33:17.07,0:33:19.92,Default,,0,0,0,,[sẽ đi tìm linh noãn của huynh ấy\Nvà thê tử Sơ Hoàng đã mất.]
Dialogue: 0,0:33:20.51,0:33:21.35,Default,,0,0,0,,Chưa từng gặp sao?
Dialogue: 0,0:33:21.64,0:33:22.31,Default,,0,0,0,,Chưa từng.
Dialogue: 0,0:33:22.40,0:33:23.48,Default,,0,0,0,,Chưa từng nghe nói tới.
Dialogue: 0,0:33:25.92,0:33:26.59,Default,,0,0,0,,Đa tạ.
Dialogue: 0,0:33:38.03,0:33:41.27,Default,,0,0,0,,[May mà ông trời không phụ lòng người.]
Dialogue: 0,0:33:43.55,0:33:45.20,Default,,0,0,0,,[Cuối cùng ta cũng tìm được nó.]
Dialogue: 0,0:34:02.11,0:34:03.59,Default,,0,0,0,,[Linh noãn đó rất khó ấp nở,]
Dialogue: 0,0:34:04.24,0:34:06.51,Default,,0,0,0,,[ta đành đặt nó lên\NTu Di Tọa ở Linh Tỉnh,]
Dialogue: 0,0:34:07.48,0:34:10.00,Default,,0,0,0,,[nuôi dưỡng bằng linh khí\Nthuần khiết giữa đất trời.]
Dialogue: 0,0:34:10.51,0:34:13.07,Default,,0,0,0,,[Sau đó trong trứng có thai cử động.]
Dialogue: 0,0:34:13.32,0:34:15.48,Default,,0,0,0,,[Ta lại đưa nguyên thần\Ncủa nó vào nhân gian,]
Dialogue: 0,0:34:16.00,0:34:17.76,Default,,0,0,0,,luân hồi lịch kiếp liên tục.
Dialogue: 0,0:34:18.59,0:34:20.11,Default,,0,0,0,,Mong rằng có ngày
Dialogue: 0,0:34:20.80,0:34:24.36,Default,,0,0,0,,có cơ hội nở ra.
Dialogue: 0,0:34:25.71,0:34:27.59,Default,,0,0,0,,[Con bé sinh ra\Ntrên Linh Tỉnh ở Thiên Trì,]
Dialogue: 0,0:34:28.03,0:34:29.88,Default,,0,0,0,,[là nơi tập trung linh khí của đất trời.]
Dialogue: 0,0:34:30.15,0:34:32.96,Default,,0,0,0,,[Vậy nên ta đặt tên\Ncho con bé là Dục Linh.]
Dialogue: 0,0:34:35.80,0:34:37.40,Default,,0,0,0,,[Năm xưa Sơ Hoàng vẫn lạc,]
Dialogue: 0,0:34:37.80,0:34:39.71,Default,,0,0,0,,[thân xác hóa thành đàn không Trùng Vũ,]
Dialogue: 0,0:34:40.11,0:34:41.76,Default,,0,0,0,,[là bảo vật quan trọng\Ncủa Hành Dương Tông.]
Dialogue: 0,0:34:42.71,0:34:45.51,Default,,0,0,0,,[Ta ban tặng đàn Không cho đứa bé đó,]
Dialogue: 0,0:34:45.96,0:34:47.40,Default,,0,0,0,,[mong rằng]
Dialogue: 0,0:34:48.23,0:34:50.96,Default,,0,0,0,,con bé sẽ được mẫu thân âm thầm bảo vệ.
Dialogue: 0,0:34:51.48,0:34:53.36,Default,,0,0,0,,[Hóa ra người mình gặp lúc đó]
Dialogue: 0,0:34:54.11,0:34:55.71,Default,,0,0,0,,[là mẫu thân của mình.]
Dialogue: 0,0:34:59.23,0:35:01.63,Default,,0,0,0,,[Cha đưa nguyên thần\Ncủa mình vào nhân gian,]
Dialogue: 0,0:35:01.92,0:35:03.03,Default,,0,0,0,,[lịch kiếp liên tục,]
Dialogue: 0,0:35:03.55,0:35:05.80,Default,,0,0,0,,[nên mới có Diệp Tịch Vụ 500 năm trước]
Dialogue: 0,0:35:06.15,0:35:07.76,Default,,0,0,0,,[trông giống y hệt mình.]
Dialogue: 0,0:35:09.15,0:35:10.11,Default,,0,0,0,,[Có lẽ]
Dialogue: 0,0:35:11.11,0:35:13.07,Default,,0,0,0,,[cô ấy là một kiếp tai ác của mình.]
Dialogue: 0,0:35:13.55,0:35:16.11,Default,,0,0,0,,[Sau khi trải qua một kiếp,\Nnguyên hồn nên quay về]
Dialogue: 0,0:35:16.71,0:35:18.48,Default,,0,0,0,,[nhưng lại bị tổn hại vì lôi kiếp.]
Dialogue: 0,0:35:19.59,0:35:20.76,Default,,0,0,0,,[Cũng vì thế]
Dialogue: 0,0:35:21.15,0:35:22.23,Default,,0,0,0,,[mà 500 năm sau,]
Dialogue: 0,0:35:22.84,0:35:25.03,Default,,0,0,0,,[cơ thể mình mới tự thiêu đốt,]
Dialogue: 0,0:35:25.44,0:35:27.51,Default,,0,0,0,,[phải nghỉ ngơi trên Tu Di Tọa mười năm]
Dialogue: 0,0:35:28.00,0:35:29.67,Default,,0,0,0,,[tới khi lịch kiếp kết thúc]
Dialogue: 0,0:35:30.28,0:35:31.71,Default,,0,0,0,,[mới thực sự tỉnh lại.]
Dialogue: 0,0:35:36.40,0:35:37.80,Default,,0,0,0,,Chuyện là vậy đấy.
Dialogue: 0,0:35:38.59,0:35:39.36,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:35:39.88,0:35:41.07,Default,,0,0,0,,cha giấu con lâu như vậy,
Dialogue: 0,0:35:41.59,0:35:42.76,Default,,0,0,0,,con sẽ không trách ta chứ?
Dialogue: 0,0:35:45.76,0:35:46.76,Default,,0,0,0,,Con…
Dialogue: 0,0:35:54.07,0:35:54.71,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:35:55.44,0:35:57.00,Default,,0,0,0,,con không cần ép buộc mình.
Dialogue: 0,0:35:57.23,0:35:59.11,Default,,0,0,0,,Nếu con không muốn\Nnhận người phụ thân này,
Dialogue: 0,0:35:59.36,0:36:01.55,Default,,0,0,0,,thậm chí hận ta đều là chuyện thường tình.
Dialogue: 0,0:36:02.96,0:36:04.32,Default,,0,0,0,,Ta không hận ông,
Dialogue: 0,0:36:04.55,0:36:07.59,Default,,0,0,0,,chỉ là không biết nên làm thế nào.
Dialogue: 0,0:36:08.07,0:36:09.28,Default,,0,0,0,,Không sao,
Dialogue: 0,0:36:09.88,0:36:11.28,Default,,0,0,0,,dù con có nhận ta hay không,
Dialogue: 0,0:36:12.19,0:36:14.63,Default,,0,0,0,,Cù chưởng môn vẫn luôn là phụ thân con.
Dialogue: 0,0:36:15.15,0:36:16.28,Default,,0,0,0,,Bất kỳ ai cũng không thể
Dialogue: 0,0:36:16.28,0:36:17.71,Default,,0,0,0,,xóa bỏ công ơn dưỡng dục này được.
Dialogue: 0,0:36:18.28,0:36:18.96,Default,,0,0,0,,Được rồi,
Dialogue: 0,0:36:19.76,0:36:21.76,Default,,0,0,0,,dù con có bằng lòng\Ngọi ta là phụ thân hay không,
Dialogue: 0,0:36:22.51,0:36:23.55,Default,,0,0,0,,chúng ta đều sẽ
Dialogue: 0,0:36:24.40,0:36:25.36,Default,,0,0,0,,cùng nhau chăm sóc cho con.
Dialogue: 0,0:36:40.28,0:36:41.11,Default,,0,0,0,,Phụ thân.
Dialogue: 0,0:36:46.19,0:36:47.11,Default,,0,0,0,,Mau đứng dậy.
Dialogue: 0,0:36:58.51,0:37:00.07,Default,,0,0,0,,Nghĩ ra cũng lạ thật.
Dialogue: 0,0:37:00.44,0:37:02.40,Default,,0,0,0,,Mẫu thân con là tộc Phượng hoàng
Dialogue: 0,0:37:02.63,0:37:04.84,Default,,0,0,0,,nhưng từ nhỏ con đã sợ chim với gà.
Dialogue: 0,0:37:05.11,0:37:06.92,Default,,0,0,0,,Có thể thấy vận mệnh đã sắp đặt sẵn,
Dialogue: 0,0:37:07.44,0:37:09.28,Default,,0,0,0,,bao lâu như vậy hóa ra là tự con sợ con.
Dialogue: 0,0:37:12.44,0:37:13.55,Default,,0,0,0,,Tốt quá rồi.
Dialogue: 0,0:37:14.48,0:37:15.88,Default,,0,0,0,,Hôm nay hai cha con nhận nhau
Dialogue: 0,0:37:16.40,0:37:18.40,Default,,0,0,0,,cũng giải quyết được\Nmối lo lớn trong lòng ta.
Dialogue: 0,0:37:20.80,0:37:21.63,Default,,0,0,0,,Đúng rồi, Đế huynh.
Dialogue: 0,0:37:22.36,0:37:23.48,Default,,0,0,0,,Thân phận của huynh đặc biệt,
Dialogue: 0,0:37:24.23,0:37:25.92,Default,,0,0,0,,đành để huynh thiệt thòi\Nở lại đây tạm thời.
Dialogue: 0,0:37:26.32,0:37:27.67,Default,,0,0,0,,Đợi ta tìm được thời cơ tốt
Dialogue: 0,0:37:27.67,0:37:29.36,Default,,0,0,0,,sẽ mời các phái tới tuyên bố chuyện này.
Dialogue: 0,0:37:29.55,0:37:30.36,Default,,0,0,0,,Rồi để huynh
Dialogue: 0,0:37:30.71,0:37:33.11,Default,,0,0,0,,đường đường chính chính xuất hiện trở lại.
Dialogue: 0,0:37:34.23,0:37:34.92,Default,,0,0,0,,Đa tạ.
Dialogue: 0,0:37:38.63,0:37:39.48,Default,,0,0,0,,Đệ nghe nói chưa?
Dialogue: 0,0:37:39.88,0:37:41.23,Default,,0,0,0,,Người tự ý xông vào sơn môn hôm nay
Dialogue: 0,0:37:41.51,0:37:42.28,Default,,0,0,0,,là Quỷ chủ Đế Miện
Dialogue: 0,0:37:42.28,0:37:44.00,Default,,0,0,0,,thống lĩnh vạn yêu vào vạn năm trước.
Dialogue: 0,0:37:44.00,0:37:45.48,Default,,0,0,0,,Vậy là tỷ không biết rồi.
Dialogue: 0,0:37:45.76,0:37:47.92,Default,,0,0,0,,Thê tử của ông ấy là Vũ Thần Sơ Hoàng đấy.
Dialogue: 0,0:37:48.76,0:37:50.23,Default,,0,0,0,,Để tìm kiếm nhược điểm của Ma Thần,
Dialogue: 0,0:37:50.51,0:37:51.59,Default,,0,0,0,,ông ấy tự đọa thành ma.
Dialogue: 0,0:37:52.44,0:37:53.88,Default,,0,0,0,,Truyền thuyết nói rồi mà.
Dialogue: 0,0:37:53.96,0:37:55.32,Default,,0,0,0,,Ông ấy đã tự tay đâm Ma Thần.
Dialogue: 0,0:37:55.63,0:37:57.67,Default,,0,0,0,,Nếu vậy thì ông ấy cũng vất vả quá.
Dialogue: 0,0:37:58.00,0:37:59.11,Default,,0,0,0,,Phải nhẫn nhục, gánh vác\Ntrách nhiệm lâu như vậy,
Dialogue: 0,0:37:59.23,0:38:00.51,Default,,0,0,0,,cuối cùng cũng có thể khôi phục thân phận.
Dialogue: 0,0:38:00.59,0:38:02.40,Default,,0,0,0,,Các phái Tiên Môn\Nphải đối xử tốt với ông ấy.
Dialogue: 0,0:38:02.67,0:38:03.44,Default,,0,0,0,,Đúng vậy,
Dialogue: 0,0:38:03.44,0:38:05.32,Default,,0,0,0,,ông ấy là đại anh hùng giết Ma Thần đấy.
Dialogue: 0,0:38:17.63,0:38:20.15,Default,,0,0,0,,[Lúc ấn Tẩy Tủy của\Ntôn thượng phá giải phong ấn]
Dialogue: 0,0:38:20.51,0:38:22.59,Default,,0,0,0,,[lại đã tập hợp đủ nguyên thần của tỷ tỷ.]
Dialogue: 0,0:38:26.03,0:38:26.76,Default,,0,0,0,,Tỷ tỷ,
Dialogue: 0,0:38:27.00,0:38:28.11,Default,,0,0,0,,cuối cùng tỷ cũng tỉnh lại.
Dialogue: 0,0:38:28.92,0:38:30.67,Default,,0,0,0,,Lần này tôn thượng lại cứu tỷ một lần nữa.
Dialogue: 0,0:38:58.59,0:38:59.44,Default,,0,0,0,,Tỷ tỷ.
Dialogue: 0,0:39:07.48,0:39:08.23,Default,,0,0,0,,Tỷ tỷ,
Dialogue: 0,0:39:09.36,0:39:10.88,Default,,0,0,0,,ta là Tự Anh đây.
Dialogue: 0,0:39:11.92,0:39:13.07,Default,,0,0,0,,Tự Anh?
Dialogue: 0,0:39:45.71,0:39:50.15,Default,,0,0,0,,Vạn năm trước,\Nnguyên thần của tỷ tỷ bị tổn thương,
Dialogue: 0,0:39:51.44,0:39:54.84,Default,,0,0,0,,mới bị tôn thượng đưa\Nvào nhân gian để lịch kiếp.
Dialogue: 0,0:40:00.59,0:40:03.76,Default,,0,0,0,,Nay nguyên thần của tỷ\Nđã được chữa lành trở về.
Dialogue: 0,0:40:04.76,0:40:08.48,Default,,0,0,0,,Tỷ muội chúng ta cuối cùng\Ncũng có thể đoàn tụ rồi.
Dialogue: 0,0:40:11.32,0:40:11.96,Default,,0,0,0,,Muội muội.
Dialogue: 0,0:40:13.40,0:40:14.03,Default,,0,0,0,,Tỷ tỷ.
Dialogue: 0,0:40:22.03,0:40:22.67,Default,,0,0,0,,[Thiên Địa Đồng Lưu]\NTô Tô,
Dialogue: 0,0:40:23.51,0:40:25.71,Default,,0,0,0,,con đã biết thân thế của mình,
Dialogue: 0,0:40:26.76,0:40:28.84,Default,,0,0,0,,những thay đổi sau khi con xuất quan
Dialogue: 0,0:40:29.63,0:40:30.84,Default,,0,0,0,,cũng tự nhiên
Dialogue: 0,0:40:31.15,0:40:32.80,Default,,0,0,0,,có đáp án cả rồi nhỉ?
Dialogue: 0,0:40:34.28,0:40:35.32,Default,,0,0,0,,Tộc Phượng hoàng
Dialogue: 0,0:40:35.92,0:40:37.80,Default,,0,0,0,,trời sinh thích hợp tu đạo Vô Tình.
Dialogue: 0,0:40:38.28,0:40:39.76,Default,,0,0,0,,Ấy là đường tắt để trở thành thần.
Dialogue: 0,0:40:40.44,0:40:41.44,Default,,0,0,0,,Nhưng chuyện này
Dialogue: 0,0:40:41.84,0:40:43.71,Default,,0,0,0,,vẫn phải do bản thân con quyết định.
Dialogue: 0,0:40:45.36,0:40:46.15,Default,,0,0,0,,Cha,
Dialogue: 0,0:40:47.51,0:40:49.28,Default,,0,0,0,,con đã biết xuất thân của mình,
Dialogue: 0,0:40:49.67,0:40:51.84,Default,,0,0,0,,sẽ càng thêm kiên định\Nvới mục tiêu của bản thân.
Dialogue: 0,0:40:52.63,0:40:54.44,Default,,0,0,0,,Mẫu thân của con bị Ma Thần giết hại,
Dialogue: 0,0:40:54.55,0:40:56.11,Default,,0,0,0,,phụ thân lại từng bị hắn cầm tù.
Dialogue: 0,0:40:56.84,0:40:58.48,Default,,0,0,0,,Về công về tư,
Dialogue: 0,0:40:58.92,0:41:01.07,Default,,0,0,0,,chống lại Ma Thần đều là sứ mệnh của con.
Dialogue: 0,0:41:02.51,0:41:04.51,Default,,0,0,0,,Nếu Ma Thần thật sự quay lại thế gian,
Dialogue: 0,0:41:04.96,0:41:06.40,Default,,0,0,0,,vậy thì khắp tam giới tứ châu
Dialogue: 0,0:41:09.15,0:41:11.71,Default,,0,0,0,,chỉ có thần linh\Nmới có thể đối đầu với hắn.
Dialogue: 0,0:41:11.92,0:41:13.03,Default,,0,0,0,,Nhưng giao trách nhiệm nặng nề như vậy
Dialogue: 0,0:41:13.07,0:41:14.92,Default,,0,0,0,,cho một mình con gánh vác,
Dialogue: 0,0:41:15.07,0:41:15.55,Default,,0,0,0,,chuyện này…
Dialogue: 0,0:41:18.76,0:41:20.00,Default,,0,0,0,,Xin cha yên tâm.
Dialogue: 0,0:41:20.71,0:41:21.63,Default,,0,0,0,,Tô Tô bảo đảm
Dialogue: 0,0:41:21.92,0:41:24.15,Default,,0,0,0,,Ma Thần sẽ không có ngày trở lại thế gian.
Dialogue: 0,0:41:29.59,0:41:31.92,Default,,0,0,0,,[Tuy tà cốt của Đàm Đài Tẫn đã bị rút đi,]
Dialogue: 0,0:41:33.03,0:41:35.32,Default,,0,0,0,,[nhưng thân phận ma thai\Nvẫn rất đặc biệt,]
Dialogue: 0,0:41:36.48,0:41:37.23,Default,,0,0,0,,[để sau khi]
Dialogue: 0,0:41:38.63,0:41:40.59,Default,,0,0,0,,[ta thật sự hủy diệt được tà cốt]
Dialogue: 0,0:41:40.71,0:41:41.84,Default,,0,0,0,,[rồi mới nói họ biết mọi chuyện thì hơn.]
Dialogue: 0,0:41:43.23,0:41:44.07,Default,,0,0,0,,[Có điều]
Dialogue: 0,0:41:45.07,0:41:47.32,Default,,0,0,0,,[việc tu luyện đạo Vô Tình\Ncủa ta thật sự…]
Dialogue: 0,0:42:02.28,0:42:03.48,Default,,0,0,0,,Không biết Thương sư đệ
Dialogue: 0,0:42:04.67,0:42:05.71,Default,,0,0,0,,tìm ta có việc gì?
Dialogue: 0,0:42:06.71,0:42:07.76,Default,,0,0,0,,Lần này đến đây
Dialogue: 0,0:42:08.63,0:42:10.15,Default,,0,0,0,,đúng là có một việc muốn nhờ.
Dialogue: 0,0:42:10.92,0:42:12.07,Default,,0,0,0,,Xin rửa tai lắng nghe.
Dialogue: 0,0:42:13.51,0:42:14.36,Default,,0,0,0,,Thật ra
Dialogue: 0,0:42:15.59,0:42:17.76,Default,,0,0,0,,ta được sinh ra ở nước Cảnh 500 năm trước.
Dialogue: 0,0:42:19.51,0:42:20.28,Default,,0,0,0,,Thuở nhỏ
Dialogue: 0,0:42:21.23,0:42:22.51,Default,,0,0,0,,ta bị phụ thân ghét bỏ,
Dialogue: 0,0:42:23.15,0:42:24.28,Default,,0,0,0,,bị người khác bắt nạt,
Dialogue: 0,0:42:24.92,0:42:27.03,Default,,0,0,0,,chưa từng cảm nhận được\Nhơi ấm của thế gian.
Dialogue: 0,0:42:27.44,0:42:28.59,Default,,0,0,0,,Bỗng có một người,
Dialogue: 0,0:42:30.92,0:42:32.40,Default,,0,0,0,,nàng ấy đã đến bên ta.
Dialogue: 0,0:42:35.32,0:42:36.28,Default,,0,0,0,,Ban đầu
Dialogue: 0,0:42:37.36,0:42:38.80,Default,,0,0,0,,nàng ấy cứ nói là muốn giết ta
Dialogue: 0,0:42:40.19,0:42:42.44,Default,,0,0,0,,nhưng nàng ấy lại năm lần bảy lượt cứu ta.
Dialogue: 0,0:42:43.23,0:42:44.67,Default,,0,0,0,,Là nàng ấy cho ta biết
Dialogue: 0,0:42:45.84,0:42:47.15,Default,,0,0,0,,con người còn có niềm vui,
Dialogue: 0,0:42:48.07,0:42:49.11,Default,,0,0,0,,có hơi ấm,
Dialogue: 0,0:42:49.96,0:42:50.92,Default,,0,0,0,,có đau thương,
Dialogue: 0,0:42:52.03,0:42:53.11,Default,,0,0,0,,có chua xót,
Dialogue: 0,0:42:54.07,0:42:55.92,Default,,0,0,0,,và còn rất nhiều điều tươi đẹp.
Dialogue: 0,0:42:56.92,0:42:57.67,Default,,0,0,0,,Sau này
Dialogue: 0,0:42:59.59,0:43:01.03,Default,,0,0,0,,nàng ấy nói thích ta,
Dialogue: 0,0:43:02.28,0:43:04.03,Default,,0,0,0,,khi ấy ta vui mừng khôn tả.
Dialogue: 0,0:43:07.28,0:43:08.36,Default,,0,0,0,,Nếu thời gian
Dialogue: 0,0:43:09.19,0:43:11.03,Default,,0,0,0,,có thể mãi mãi dừng lại ở khoảnh khắc ấy
Dialogue: 0,0:43:13.00,0:43:14.11,Default,,0,0,0,,thì tốt biết bao.
Dialogue: 0,0:43:26.40,0:43:27.36,Default,,0,0,0,,Người ấy là ai?
Dialogue: 0,0:43:31.80,0:43:33.32,Default,,0,0,0,,Nàng ấy tên là Diệp Tịch Vụ.
Dialogue: 0,0:43:35.19,0:43:36.00,Default,,0,0,0,,Đáng tiếc,
Dialogue: 0,0:43:37.07,0:43:39.28,Default,,0,0,0,,ta đã phạm phải một sai lầm\Nkhông thể bù đắp,
Dialogue: 0,0:43:41.00,0:43:42.00,Default,,0,0,0,,nàng ấy đã chết rồi.
Dialogue: 0,0:43:47.03,0:43:48.36,Default,,0,0,0,,Người chết không thể sống lại,
Dialogue: 0,0:43:49.84,0:43:50.76,Default,,0,0,0,,xin nén đau thương.
Dialogue: 0,0:43:53.44,0:43:54.28,Default,,0,0,0,,Vốn dĩ
Dialogue: 0,0:43:56.03,0:43:58.59,Default,,0,0,0,,ta muốn dùng một mồi lửa\Nthiêu thành tro cùng nàng ấy,
Dialogue: 0,0:43:59.67,0:44:00.96,Default,,0,0,0,,nhưng có người nói với ta rằng
Dialogue: 0,0:44:01.92,0:44:03.59,Default,,0,0,0,,trên đời có sông U Minh
Dialogue: 0,0:44:03.96,0:44:05.63,Default,,0,0,0,,hội tụ nguyên thần khắp tam giới.
Dialogue: 0,0:44:07.40,0:44:09.11,Default,,0,0,0,,Để có thể gặp lại nàng ấy,
Dialogue: 0,0:44:10.03,0:44:11.51,Default,,0,0,0,,ta đã tìm đến sông U Minh.
Dialogue: 0,0:44:12.48,0:44:13.96,Default,,0,0,0,,Ta đã tìm kiếm ở sông U Minh
Dialogue: 0,0:44:14.44,0:44:16.40,Default,,0,0,0,,suốt 500 năm trời,
Dialogue: 0,0:44:17.28,0:44:18.36,Default,,0,0,0,,ngày qua ngày
Dialogue: 0,0:44:18.88,0:44:20.55,Default,,0,0,0,,bị Nhược Thủy thiêu đốt da thịt,
Dialogue: 0,0:44:21.59,0:44:23.03,Default,,0,0,0,,đau đớn thấu xương.
Dialogue: 0,0:44:25.23,0:44:26.28,Default,,0,0,0,,Cho đến sau này
Dialogue: 0,0:44:27.11,0:44:28.84,Default,,0,0,0,,ta đã không còn cảm nhận được sự đau đớn,
Dialogue: 0,0:44:30.00,0:44:32.19,Default,,0,0,0,,cũng không cảm nhận được\Nrằng mình còn sống,
Dialogue: 0,0:44:35.36,0:44:38.00,Default,,0,0,0,,nhưng ta vẫn không thể tìm thấy\Nnguyên thần của nàng ấy.
Dialogue: 0,0:44:38.63,0:44:39.44,Default,,0,0,0,,Sau đó thì sao?
Dialogue: 0,0:44:40.63,0:44:41.76,Default,,0,0,0,,Cho đến một ngày
Dialogue: 0,0:44:43.19,0:44:45.11,Default,,0,0,0,,ta cảm thấy mình sắp chết rồi,
Dialogue: 0,0:44:46.59,0:44:47.44,Default,,0,0,0,,may mà
Dialogue: 0,0:44:48.48,0:44:50.03,Default,,0,0,0,,được Triệu Du chân nhân cứu giúp,
Dialogue: 0,0:44:51.03,0:44:52.76,Default,,0,0,0,,trở thành đệ tử của Tiêu Dao Tông.
Dialogue: 0,0:44:57.28,0:45:00.03,Default,,0,0,0,,Đây là tất cả những gì ta trải qua
Dialogue: 0,0:45:00.96,0:45:02.19,Default,,0,0,0,,suốt 500 năm nay.
Dialogue: 0,0:45:05.59,0:45:07.63,Default,,0,0,0,,Không biết Cửu Mân sư đệ\Nnói ta nghe những chuyện này
Dialogue: 0,0:45:08.36,0:45:09.40,Default,,0,0,0,,là có ý gì?
Dialogue: 0,0:45:14.44,0:45:15.59,Default,,0,0,0,,Sông U Minh
Dialogue: 0,0:45:16.07,0:45:17.80,Default,,0,0,0,,không thể giúp ta tìm ra Diệp Tịch Vụ.
Dialogue: 0,0:45:19.44,0:45:21.63,Default,,0,0,0,,Nhưng ta lại biết đến\Nmột loại trận pháp Tụ Hồn.
Dialogue: 0,0:45:21.88,0:45:23.96,Default,,0,0,0,,Nó có thể giúp ta tìm ra\Nnguyên thần của Diệp Tịch Vụ.
Dialogue: 0,0:45:24.59,0:45:25.80,Default,,0,0,0,,Nhưng trận pháp này
Dialogue: 0,0:45:26.76,0:45:29.40,Default,,0,0,0,,cần máu của linh thể Vô Cấu làm vật dẫn.
Dialogue: 0,0:45:34.32,0:45:35.19,Default,,0,0,0,,Không biết Lê cô nương
Dialogue: 0,0:45:35.80,0:45:37.00,Default,,0,0,0,,có thể giúp ta
Dialogue: 0,0:45:37.51,0:45:39.07,Default,,0,0,0,,tìm lại người ta yêu không?
Dialogue: 0,0:45:41.11,0:45:42.92,Default,,0,0,0,,Nếu ta thật sự có thể tìm lại nàng ấy,
Dialogue: 0,0:45:43.67,0:45:46.19,Default,,0,0,0,,ta sẵn lòng dốc hết\Ntất cả những gì mình có
Dialogue: 0,0:45:47.80,0:45:49.07,Default,,0,0,0,,để bù đắp cho nàng ấy.
Dialogue: 0,0:45:49.36,0:45:50.07,Default,,0,0,0,,Cho dù
Dialogue: 0,0:45:51.15,0:45:52.67,Default,,0,0,0,,nàng ấy muốn tính mạng của ta,
Dialogue: 0,0:45:55.59,0:45:57.03,Default,,0,0,0,,ta cũng có thể cho nàng ấy.
Dialogue: 0,0:46:03.32,0:46:04.28,Default,,0,0,0,,Ta không giúp đệ được.
Dialogue: 0,0:46:05.28,0:46:06.23,Default,,0,0,0,,Người quá cố đã mất,
Dialogue: 0,0:46:06.88,0:46:08.28,Default,,0,0,0,,đệ đã thay tên đổi họ,
Dialogue: 0,0:46:08.28,0:46:09.23,Default,,0,0,0,,sống cuộc đời khác,
Dialogue: 0,0:46:10.40,0:46:12.44,Default,,0,0,0,,sao không triệt để quên đi\Nnhững chuyện đã qua?
Dialogue: 0,0:46:13.63,0:46:15.28,Default,,0,0,0,,Diệp Tịch Vụ trong lòng đệ
Dialogue: 0,0:46:16.55,0:46:18.00,Default,,0,0,0,,từ lâu đã không còn tồn tại nữa rồi.
Dialogue: 0,0:46:19.55,0:46:20.63,Default,,0,0,0,,Không còn tồn tại nữa ư?
Dialogue: 0,0:46:21.67,0:46:23.07,Default,,0,0,0,,Không còn tồn tại nữa là sao?
Dialogue: 0,0:46:24.00,0:46:25.48,Default,,0,0,0,,Hai người có gương mặt giống nhau,
Dialogue: 0,0:46:25.88,0:46:27.23,Default,,0,0,0,,có tính tình giống nhau.
Dialogue: 0,0:46:27.67,0:46:28.55,Default,,0,0,0,,Dục Linh tiên tử,
Dialogue: 0,0:46:29.51,0:46:31.88,Default,,0,0,0,,nàng chính là Diệp Tịch Vụ.
Dialogue: 0,0:46:33.59,0:46:35.00,Default,,0,0,0,,Tại sao nàng không dám thừa nhận?
Dialogue: 0,0:46:38.55,0:46:39.63,Default,,0,0,0,,Nàng biết không,
Dialogue: 0,0:46:41.03,0:46:42.76,Default,,0,0,0,,nàng thậm chí còn không dám nhìn ta.
Dialogue: 0,0:46:49.48,0:46:51.15,Default,,0,0,0,,Đệ có từng nghe chuyện\NTrang Chu mộng hồ điệp chưa?
Dialogue: 0,0:46:51.96,0:46:52.63,Default,,0,0,0,,Gì cơ?
Dialogue: 0,0:46:53.71,0:46:55.92,Default,,0,0,0,,Đệ hãy xem Diệp Tịch Vụ là cánh bướm ấy,
Dialogue: 0,0:46:57.03,0:46:58.07,Default,,0,0,0,,như một giấc mộng,
Dialogue: 0,0:46:58.76,0:46:59.63,Default,,0,0,0,,tỉnh rồi
Dialogue: 0,0:47:00.48,0:47:01.36,Default,,0,0,0,,thì nên để nó tan biến mất.
Dialogue: 0,0:47:02.36,0:47:03.11,Default,,0,0,0,,Tan biến ư?
Dialogue: 0,0:47:03.71,0:47:05.15,Default,,0,0,0,,Tan biến làm sao được đây?
Dialogue: 0,0:47:06.96,0:47:08.03,Default,,0,0,0,,Năm trăm năm rồi.
Dialogue: 0,0:47:10.03,0:47:11.63,Default,,0,0,0,,Ta chưa từng quên nàng ấy.
Dialogue: 0,0:47:12.76,0:47:13.96,Default,,0,0,0,,Ta từng thấy nàng ấy cười,
Dialogue: 0,0:47:14.80,0:47:16.00,Default,,0,0,0,,từng thấy nàng ấy khóc,
Dialogue: 0,0:47:17.71,0:47:18.80,Default,,0,0,0,,nàng ấy từng ôm ta,
Dialogue: 0,0:47:19.55,0:47:20.63,Default,,0,0,0,,từng bảo vệ ta,
Dialogue: 0,0:47:23.71,0:47:24.71,Default,,0,0,0,,nàng ấy từng yêu ta,
Dialogue: 0,0:47:25.03,0:47:25.92,Default,,0,0,0,,từng hận ta.
Dialogue: 0,0:47:27.76,0:47:29.48,Default,,0,0,0,,Dù đây thật sự chỉ là một giấc mộng,
Dialogue: 0,0:47:30.00,0:47:31.48,Default,,0,0,0,,nàng bỏ rơi ta trong mộng,
Dialogue: 0,0:47:32.03,0:47:34.11,Default,,0,0,0,,sao ta có thể dễ dàng tỉnh lại đây?
Dialogue: 0,0:47:40.76,0:47:42.44,Default,,0,0,0,,Ta không hiểu đệ đang nói gì.
Dialogue: 0,0:47:43.36,0:47:44.96,Default,,0,0,0,,Ta đã tỉnh mộng rồi.
Dialogue: 0,0:47:45.63,0:47:46.76,Default,,0,0,0,,Đệ có tỉnh hay không
Dialogue: 0,0:47:47.76,0:47:48.80,Default,,0,0,0,,đều không liên quan đến ta.
Dialogue: 0,0:47:49.19,0:47:50.28,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:47:54.88,0:47:56.44,Default,,0,0,0,,nếu ngươi thật sự muốn bù đắp
Dialogue: 0,0:47:57.80,0:47:59.40,Default,,0,0,0,,thì hãy lãng quên quá khứ,
Dialogue: 0,0:47:59.88,0:48:01.96,Default,,0,0,0,,cứ làm Thương Cửu Mân của ngươi.
Dialogue: 0,0:48:06.98,0:48:09.34,Default,,0,0,0,,♪Biết bao lời muốn nói♪
Dialogue: 0,0:48:09.38,0:48:11.58,Default,,0,0,0,,♪Nghẹn nơi cổ họng♪
Dialogue: 0,0:48:11.66,0:48:15.54,Default,,0,0,0,,♪Như bụi tuyết trôi nổi rồi chìm xuống ly♪
Dialogue: 0,0:48:16.19,0:48:17.23,Default,,0,0,0,,Còn ta
Dialogue: 0,0:48:18.92,0:48:21.07,Default,,0,0,0,,là Lê Tô Tô, con gái của chưởng môn.
Dialogue: 0,0:48:22.84,0:48:24.63,Default,,0,0,0,,Nay Ma Thần lại sắp xuất hiện,
Dialogue: 0,0:48:25.36,0:48:27.15,Default,,0,0,0,,tam giới tứ châu như sa xuống vực sâu,
Dialogue: 0,0:48:27.44,0:48:29.48,Default,,0,0,0,,ta đã quyết tâm tu đạo Vô Tình,
Dialogue: 0,0:48:30.19,0:48:31.59,Default,,0,0,0,,cả đời này
Dialogue: 0,0:48:31.88,0:48:33.23,Default,,0,0,0,,trừ ma vệ đạo.
Dialogue: 0,0:48:33.34,0:48:35.18,Default,,0,0,0,,♪Tha thiết mong có lấy một người♪
Dialogue: 0,0:48:35.22,0:48:37.67,Default,,0,0,0,,♪Muốn có lấy cả đời♪
Dialogue: 0,0:48:37.67,0:48:39.00,Default,,0,0,0,,Kiếp trước tan biến,
Dialogue: 0,0:48:40.28,0:48:41.59,Default,,0,0,0,,kiếp này là người xa lạ.
Dialogue: 0,0:48:44.92,0:48:46.23,Default,,0,0,0,,Đây là con đường
Dialogue: 0,0:48:47.76,0:48:48.80,Default,,0,0,0,,chúng ta nên đi.
Dialogue: 0,0:48:49.58,0:48:51.94,Default,,0,0,0,,♪Ai có thể chỉ biết đến mình♪
Dialogue: 0,0:48:51.94,0:48:54.02,Default,,0,0,0,,♪Mang lòng yêu như nước xiết♪
Dialogue: 0,0:48:54.06,0:48:56.98,Default,,0,0,0,,♪Lại róc rách không nghe thấy♪
Dialogue: 0,0:48:57.34,0:49:01.58,Default,,0,0,0,,♪Những lời chưa nói\Nnhư dòng nước chảy sâu♪
Dialogue: 0,0:49:01.94,0:49:06.06,Default,,0,0,0,,♪Từng rung động trước một ánh mắt♪
Dialogue: 0,0:49:06.18,0:49:08.58,Default,,0,0,0,,♪Ngoảnh đầu nhìn lại hoa rơi lả tả♪
Dialogue: 0,0:49:09.51,0:49:10.28,Default,,0,0,0,,Ta mệt rồi.
Dialogue: 0,0:49:11.76,0:49:12.67,Default,,0,0,0,,Đệ đi đi.
Dialogue: 0,0:49:13.06,0:49:16.14,Default,,0,0,0,,♪Chẳng biết ai làm nền cho ai♪
Dialogue: 0,0:49:16.58,0:49:20.90,Default,,0,0,0,,♪Vượt qua tầng sâu nhất trong lòng♪
Dialogue: 0,0:49:21.10,0:49:25.62,Default,,0,0,0,,♪Chưa đến lúc bạc đầu\Nbên gối đã trống không♪
Dialogue: 0,0:49:38.32,0:49:39.03,Default,,0,0,0,,Thì ra
Dialogue: 0,0:49:41.07,0:49:42.84,Default,,0,0,0,,nàng nói muôn đời muôn kiếp
Dialogue: 0,0:49:44.51,0:49:46.07,Default,,0,0,0,,không gặp lại ta
Dialogue: 0,0:49:48.96,0:49:50.19,Default,,0,0,0,,là thật lòng.
Dialogue: 0,0:49:50.19,0:49:52.42,Default,,0,0,0,,♪Mơ say túy lúy chẳng ngừng uống♪
Dialogue: 0,0:49:52.46,0:49:54.58,Default,,0,0,0,,♪Say đến nỗi mất chừng mực♪
Dialogue: 0,0:49:54.66,0:49:59.10,Default,,0,0,0,,♪Mượn tóc mai để âu yếm,\Nlưu luyến đường chỉ tay mỏng manh♪
Dialogue: 0,0:50:00.10,0:50:02.18,Default,,0,0,0,,♪Có thể gặp lại nhau trong biển người♪
Dialogue: 0,0:50:02.18,0:50:04.62,Default,,0,0,0,,♪Là vô cùng may mắn♪
Dialogue: 0,0:50:04.62,0:50:08.66,Default,,0,0,0,,♪Chuyện đời không thắng được một nụ hôn♪
Dialogue: 0,0:50:08.74,0:50:11.38,Default,,0,0,0,,♪Rõ ràng đã là người trong cuộc♪
Dialogue: 0,0:50:11.38,0:50:13.78,Default,,0,0,0,,♪Ai có thể chỉ biết đến mình♪
Dialogue: 0,0:50:13.78,0:50:15.90,Default,,0,0,0,,♪Mang lòng yêu như nước xiết♪
Dialogue: 0,0:50:15.98,0:50:18.90,Default,,0,0,0,,♪Lại róc rách không nghe thấy♪
Dialogue: 0,0:50:19.06,0:50:23.46,Default,,0,0,0,,♪Biết rằng cái ôm sẽ\Nchữa lành những vết sẹo♪
Dialogue: 0,0:50:23.58,0:50:28.10,Default,,0,0,0,,♪Mà vẫn dốc trọn kiếp này vì người♪
Dialogue: 0,0:50:28.10,0:50:30.66,Default,,0,0,0,,♪Ngoảnh đầu nhìn lại hoa rơi lả tả♪
Dialogue: 0,0:50:30.66,0:50:33.06,Default,,0,0,0,,♪Lặng im tiến vào ánh mắt người♪
Dialogue: 0,0:50:33.06,0:50:34.86,Default,,0,0,0,,♪Hoa đào đậu xuống hàng mày♪
Dialogue: 0,0:50:34.86,0:50:38.06,Default,,0,0,0,,♪Chẳng biết ai làm nền cho ai♪
Dialogue: 0,0:50:41.36,0:50:43.67,Default,,0,0,0,,[Nàng ấy từng yêu ta, hận ta,]
Dialogue: 0,0:50:46.23,0:50:47.96,Default,,0,0,0,,[dù cho đây chỉ là một giấc mơ,]
Dialogue: 0,0:50:48.03,0:50:49.51,Default,,0,0,0,,nàng bỏ rơi ta trong mộng,
Dialogue: 0,0:50:50.19,0:50:52.28,Default,,0,0,0,,sao ta có thể dễ dàng tỉnh lại đây?
Dialogue: 0,0:50:52.28,0:50:54.42,Default,,0,0,0,,♪Ai có thể chỉ biết đến mình♪
Dialogue: 0,0:50:54.62,0:50:56.70,Default,,0,0,0,,♪Mang lòng yêu như nước xiết♪
Dialogue: 0,0:50:56.70,0:50:59.03,Default,,0,0,0,,♪Lại róc rách không nghe thấy♪
Dialogue: 0,0:50:59.03,0:50:59.71,Default,,0,0,0,,[Thì ra]
Dialogue: 0,0:51:01.36,0:51:02.84,Default,,0,0,0,,[nàng nói muôn đời muôn kiếp]
Dialogue: 0,0:51:04.00,0:51:05.48,Default,,0,0,0,,[không gặp lại ta]
Dialogue: 0,0:51:06.32,0:51:07.44,Default,,0,0,0,,[là thật lòng.]
Dialogue: 0,0:51:08.78,0:51:11.50,Default,,0,0,0,,♪Một giấc mơ lớn, cùng đôi ta♪
Dialogue: 0,0:51:11.50,0:51:13.90,Default,,0,0,0,,♪Tơ tình quấn lấy hơi ấm còn sót lại♪
Dialogue: 0,0:51:13.90,0:51:15.62,Default,,0,0,0,,♪Tình yêu đã sớm bén rễ♪
Dialogue: 0,0:51:15.62,0:51:18.74,Default,,0,0,0,,♪Gieo hạt tình rồi, khó bỏ khó chia xa♪
Dialogue: 0,0:51:18.90,0:51:23.58,Default,,0,0,0,,♪Vượt qua tầng sâu nhất trong lòng♪
Dialogue: 0,0:51:23.74,0:51:28.34,Default,,0,0,0,,♪Đời đời kiếp kiếp vấn vương người♪
Dialogue: 0,0:51:48.03,0:51:49.59,Default,,0,0,0,,Cuộc so tài giữa các Tiên Môn lần này,
Dialogue: 0,0:51:49.71,0:51:51.32,Default,,0,0,0,,ta cho con biết bao pháp bảo
Dialogue: 0,0:51:51.51,0:51:53.15,Default,,0,0,0,,là để con giành được hạng nhất,
Dialogue: 0,0:51:53.76,0:51:55.67,Default,,0,0,0,,khiến Xích Tiêu Tông chúng ta\Nnở mày nở mặt.
Dialogue: 0,0:51:56.80,0:51:57.51,Default,,0,0,0,,Con thì hay rồi,
Dialogue: 0,0:51:58.59,0:52:00.76,Default,,0,0,0,,không muốn giành hạng nhất thì thôi,
Dialogue: 0,0:52:01.07,0:52:03.19,Default,,0,0,0,,sao con lại đi đùa giỡn\Ncô nương nhà người ta?
Dialogue: 0,0:52:03.55,0:52:05.32,Default,,0,0,0,,Con nói xem,\Nsao con lại không có tiền đồ vậy chứ?
Dialogue: 0,0:52:06.96,0:52:08.07,Default,,0,0,0,,Con còn bị thương đây này.
Dialogue: 0,0:52:10.92,0:52:11.63,Default,,0,0,0,,Cha,
Dialogue: 0,0:52:11.71,0:52:12.84,Default,,0,0,0,,cha cũng chẳng trút giận cho con.
Dialogue: 0,0:52:12.84,0:52:14.03,Default,,0,0,0,,Ta còn trút giận cho con?
Dialogue: 0,0:52:15.11,0:52:17.28,Default,,0,0,0,,Giờ ta còn chẳng còn\Nmặt mũi nào gặp người ta.
Dialogue: 0,0:52:17.40,0:52:19.59,Default,,0,0,0,,Khi nào thì con mới cho ta nở mày nở mặt
Dialogue: 0,0:52:19.59,0:52:20.92,Default,,0,0,0,,được như Thương Cửu Mân
Dialogue: 0,0:52:21.03,0:52:22.51,Default,,0,0,0,,và Công Dã Tịch Vô đây?
Dialogue: 0,0:52:23.59,0:52:25.03,Default,,0,0,0,,Con cũng muốn được như họ,
Dialogue: 0,0:52:25.48,0:52:27.19,Default,,0,0,0,,nhưng con vốn chẳng có cái khiếu ấy.
Dialogue: 0,0:52:27.40,0:52:29.07,Default,,0,0,0,,Ngày nào\Ncha cũng chỉ biết bắt con cố gắng,
Dialogue: 0,0:52:29.07,0:52:30.36,Default,,0,0,0,,có giỏi thì cha cũng cố gắng đi,
Dialogue: 0,0:52:30.44,0:52:31.59,Default,,0,0,0,,sinh thêm một đứa giống bọn họ ấy.
Dialogue: 0,0:52:31.59,0:52:32.63,Default,,0,0,0,,Ăn nói vớ vẩn.
Dialogue: 0,0:52:39.19,0:52:39.71,Default,,0,0,0,,Con,
Dialogue: 0,0:52:40.48,0:52:43.48,Default,,0,0,0,,con quỳ đủ 12 canh giờ ở đây,
Dialogue: 0,0:52:43.76,0:52:44.84,Default,,0,0,0,,kiểm điểm lại mình đi.
Dialogue: 0,0:52:53.19,0:52:54.80,Default,,0,0,0,,[Thương Cửu Mân,]
Dialogue: 0,0:52:55.84,0:52:57.40,Default,,0,0,0,,[ngươi chờ đó cho ta.]
Dialogue: 0,0:52:58.19,0:52:59.96,Default,,0,0,0,,[Sớm muộn gì]
Dialogue: 0,0:53:00.96,0:53:02.96,Default,,0,0,0,,[ta cũng khiến ngươi thân bại danh liệt.]
Dialogue: 0,0:53:09.00,0:53:11.96,Default,,0,0,0,,Vậy là muội và Thương Cửu Mân\Nđã quen biết nhau từ 500 năm trước,
Dialogue: 0,0:53:13.71,0:53:15.15,Default,,0,0,0,,còn từng là phu thê một đời.
Dialogue: 0,0:53:21.00,0:53:22.36,Default,,0,0,0,,Nguyên do chuyện này rất phức tạp,
Dialogue: 0,0:53:22.84,0:53:24.32,Default,,0,0,0,,thứ lỗi ta không tiện giải thích.
Dialogue: 0,0:53:26.11,0:53:27.07,Default,,0,0,0,,Tóm lại
Dialogue: 0,0:53:27.67,0:53:30.48,Default,,0,0,0,,Thương Cửu Mân từng là một kiếp\Nmà ta đã trải qua từ 500 năm trước.
Dialogue: 0,0:53:35.67,0:53:37.03,Default,,0,0,0,,Bảo sao sau khi muội xuất quan
Dialogue: 0,0:53:38.00,0:53:39.36,Default,,0,0,0,,cứ luôn buồn bực, không vui,
Dialogue: 0,0:53:39.88,0:53:41.00,Default,,0,0,0,,như thể biến thành người khác vậy.
Dialogue: 0,0:53:45.88,0:53:46.71,Default,,0,0,0,,Sư huynh,
Dialogue: 0,0:53:47.80,0:53:48.80,Default,,0,0,0,,ta không muốn lừa huynh.
Dialogue: 0,0:53:50.00,0:53:51.48,Default,,0,0,0,,Chuyện giữa ta và Đàm Đài Tẫn
Dialogue: 0,0:53:52.23,0:53:54.00,Default,,0,0,0,,đã là quá khứ rồi.
Dialogue: 0,0:53:57.28,0:53:58.84,Default,,0,0,0,,Nhưng sau khi gặp lại chàng ấy,
Dialogue: 0,0:53:59.63,0:54:00.59,Default,,0,0,0,,ta mới hiểu ra,
Dialogue: 0,0:54:02.48,0:54:04.67,Default,,0,0,0,,dù cho ta và chàng không thể\Ntiếp tục mối duyên khi trước
Dialogue: 0,0:54:06.63,0:54:07.51,Default,,0,0,0,,thì trong lòng ta
Dialogue: 0,0:54:09.19,0:54:10.71,Default,,0,0,0,,cũng không thể có thêm ai khác.
Dialogue: 0,0:54:13.03,0:54:13.67,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:54:14.76,0:54:16.03,Default,,0,0,0,,muội nói những lời ấy với ta là để…
Dialogue: 0,0:54:16.03,0:54:17.76,Default,,0,0,0,,Vì nếu ta cứ tiếp tục chần chừ không quyết
Dialogue: 0,0:54:19.63,0:54:21.15,Default,,0,0,0,,thì sẽ chỉ càng có lỗi với huynh.
Dialogue: 0,0:54:32.03,0:54:32.71,Default,,0,0,0,,Ta hiểu rồi.
Dialogue: 0,0:54:35.23,0:54:35.88,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:54:37.32,0:54:38.55,Default,,0,0,0,,muội không cần thấy áy náy đâu.
Dialogue: 0,0:54:40.84,0:54:42.11,Default,,0,0,0,,Là do ta không chu đáo,
Dialogue: 0,0:54:43.15,0:54:44.28,Default,,0,0,0,,không phát hiện ra sớm hơn
Dialogue: 0,0:54:45.00,0:54:46.55,Default,,0,0,0,,mới khiến muội đau khổ\Nmột mình lâu như vậy.
Dialogue: 0,0:54:50.92,0:54:52.00,Default,,0,0,0,,Tuy ta thấy không cam lòng
Dialogue: 0,0:54:54.19,0:54:55.32,Default,,0,0,0,,nhưng dù thế nào đi nữa,
Dialogue: 0,0:54:56.84,0:54:59.03,Default,,0,0,0,,ta cũng hy vọng\Nmuội có thể thuận theo lòng mình,
Dialogue: 0,0:55:00.07,0:55:01.00,Default,,0,0,0,,có được hạnh phúc.
Dialogue: 0,0:55:05.92,0:55:07.55,Default,,0,0,0,,Từ bỏ một người\Nquả thật không phải chuyện dễ,
Dialogue: 0,0:55:09.48,0:55:10.40,Default,,0,0,0,,hãy cho ta chút thời gian,
Dialogue: 0,0:55:12.36,0:55:13.28,Default,,0,0,0,,mấy hôm tới,
Dialogue: 0,0:55:14.32,0:55:16.32,Default,,0,0,0,,ta sẽ xin sư phụ cho ta\Nrời phái đi bắt yêu ma.
Dialogue: 0,0:55:18.07,0:55:19.84,Default,,0,0,0,,Mong là khi ta gặp lại muội lần nữa,
Dialogue: 0,0:55:20.63,0:55:21.84,Default,,0,0,0,,ta có thể bình thản
Dialogue: 0,0:55:23.00,0:55:24.32,Default,,0,0,0,,chỉ làm đại sư huynh của muội thôi.
Dialogue: 0,0:55:27.51,0:55:28.36,Default,,0,0,0,,Đại sư huynh…
Dialogue: 0,0:55:41.15,0:55:42.11,Default,,0,0,0,,Vậy muội nghỉ ngơi đi,
Dialogue: 0,0:55:43.11,0:55:43.80,Default,,0,0,0,,ta đi dây.
Dialogue: 0,0:55:52.59,0:55:53.96,Default,,0,0,0,,[Xin lỗi đại sư huynh,]
Dialogue: 0,0:55:54.84,0:55:56.19,Default,,0,0,0,,[đau ngắn còn hơn đau dài.]
Dialogue: 0,0:55:57.11,0:55:58.00,Default,,0,0,0,,[Làm vậy]
Dialogue: 0,0:55:58.76,0:56:00.59,Default,,0,0,0,,[mới là lựa chọn tốt nhất cho hai ta.]
Dialogue: 0,0:56:06.07,0:56:07.63,Default,,0,0,0,,Nếu ngươi thực sự muốn bù đắp
Dialogue: 0,0:56:07.88,0:56:09.11,Default,,0,0,0,,thì hãy quên đi quá khứ,
Dialogue: 0,0:56:09.76,0:56:11.55,Default,,0,0,0,,[cứ làm Thương Cửu Mân của ngươi đi.]
Dialogue: 0,0:56:14.07,0:56:14.84,Default,,0,0,0,,[Còn ta]
Dialogue: 0,0:56:15.28,0:56:17.19,Default,,0,0,0,,là Lê Tô Tô, con gái chưởng môn.
Dialogue: 0,0:56:18.28,0:56:20.15,Default,,0,0,0,,Nay Ma thần lại sắp giáng thế,
Dialogue: 0,0:56:21.00,0:56:23.00,Default,,0,0,0,,ta đã quyết tâm tu đạo Vô Tình,
Dialogue: 0,0:56:23.71,0:56:26.88,Default,,0,0,0,,cả đời này chỉ trừ ma vệ đạo.
Dialogue: 0,0:56:30.80,0:56:32.23,Default,,0,0,0,,[Lại mà Ma thần.]
Dialogue: 0,0:56:54.88,0:56:55.88,Default,,0,0,0,,[Ma thai hiện thế,]
Dialogue: 0,0:56:56.03,0:56:56.92,Default,,0,0,0,,[vũ khí Ma tộc nhận chủ,]
Dialogue: 0,0:56:57.32,0:56:58.59,Default,,0,0,0,,[Ma thần sẽ sống lại.]
Dialogue: 0,0:56:59.51,0:57:02.15,Default,,0,0,0,,Tam giới sẽ gặp phải tai họa khôn cùng.
Dialogue: 0,0:57:02.63,0:57:04.88,Default,,0,0,0,,[Nghe nói đại chiến Hoang Uyên dạo trước,]
Dialogue: 0,0:57:05.23,0:57:07.36,Default,,0,0,0,,[là do hai dư nghiệt của Ma Thần\Nlà Tự Anh, Kinh Diệt]
Dialogue: 0,0:57:07.36,0:57:08.44,Default,,0,0,0,,[đã làm mất ma thai]
Dialogue: 0,0:57:08.92,0:57:10.67,Default,,0,0,0,,[nên chúng mới đi gây họa khắp nơi,]
Dialogue: 0,0:57:10.84,0:57:12.80,Default,,0,0,0,,[muốn dùng vũ khí Ma tộc\Nđể tìm ra thai ma.]
Dialogue: 0,0:57:16.96,0:57:21.24,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:57:36.92,0:57:44.68,Default,,0,0,0,,♪Nỗi lòng phàm tục\Nlà ngước mắt lên trăng bỗng khuyết♪
Dialogue: 0,0:57:44.68,0:57:52.48,Default,,0,0,0,,♪Hồng trần là đôi mắt thấy\Nmuôn hoa rụng giữa cơn mưa tuyết♪
Dialogue: 0,0:57:52.48,0:57:59.60,Default,,0,0,0,,♪Trắc ẩn là\Nmột cánh bướm trong lòng khi tan biến♪
Dialogue: 0,0:58:00.20,0:58:04.08,Default,,0,0,0,,♪Tỉnh ngộ là gột rửa hồi ức\Ntrong nước đục♪
Dialogue: 0,0:58:04.08,0:58:08.28,Default,,0,0,0,,♪Từ ấy chẳng gặp nhau♪
Dialogue: 0,0:58:09.84,0:58:13.44,Default,,0,0,0,,♪Ta từng thấy lời dịu dàng, từng nở hoa♪
Dialogue: 0,0:58:13.44,0:58:16.68,Default,,0,0,0,,♪Cay mắt đến nỗi nói mớ♪
Dialogue: 0,0:58:17.24,0:58:21.36,Default,,0,0,0,,♪Tơ tình vấn vương, mái ngói dễ vỡ♪
Dialogue: 0,0:58:21.36,0:58:24.88,Default,,0,0,0,,♪Một vòng tay có sự sợ hãi vô tận♪
Dialogue: 0,0:58:25.48,0:58:28.92,Default,,0,0,0,,♪Ta kính trọng người biết bao,\Nthời gian thấm thoát thoi đưa♪
Dialogue: 0,0:58:28.92,0:58:32.60,Default,,0,0,0,,♪Từng vững tin được yêu trong phút chốc♪
Dialogue: 0,0:58:32.68,0:58:36.80,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:58:36.80,0:58:44.56,Default,,0,0,0,,♪Sự thành kính tựa ánh trăng không tì vết♪
Dialogue: 0,0:58:46.56,0:58:49.96,Default,,0,0,0,,♪Hãy lắng nghe hơi thở của đóa hoa♪
Dialogue: 0,0:58:50.08,0:58:53.48,Default,,0,0,0,,♪Như sự phồn hoa của chúng sinh muôn loài♪
Dialogue: 0,0:58:54.04,0:58:58.24,Default,,0,0,0,,♪Dẫu đi bao lâu, sao trời hay bão cát♪
Dialogue: 0,0:58:58.24,0:59:02.44,Default,,0,0,0,,♪Ánh trăng là bộ giáp của ta♪
Dialogue: 0,0:59:02.44,0:59:05.76,Default,,0,0,0,,♪Ta mong sau này người mang theo vết sẹo♪
Dialogue: 0,0:59:05.76,0:59:09.72,Default,,0,0,0,,♪Cũng thử sống dịu dàng một phen♪
Dialogue: 0,0:59:09.88,0:59:13.40,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:59:13.40,0:59:21.02,Default,,0,0,0,,♪Yêu lại người từng căm hận♪
Dialogue: 0,0:59:21.38,0:59:28.90,Default,,0,0,0,,♪Kiếp phù du nhỏ, giấc mộng lớn♪
Dialogue: 0,0:59:28.94,0:59:37.06,Default,,0,0,0,,♪Xin đừng phụ lòng nhau♪
