Dialogue: 0,0:00:23.24,0:00:27.00,Default,,0,0,0,,♪Đêm tối, trăng ướt, máu lạnh♪
Dialogue: 0,0:00:27.44,0:00:30.76,Default,,0,0,0,,♪Phơi bày trước\Nđôi mắt sợ ánh sáng của ta♪
Dialogue: 0,0:00:31.08,0:00:34.52,Default,,0,0,0,,♪Là sáng bừng hay ấm áp♪
Dialogue: 0,0:00:34.72,0:00:38.08,Default,,0,0,0,,♪Ta chỉ có thể suy đoán bằng trực giác♪
Dialogue: 0,0:00:38.96,0:00:46.20,Default,,0,0,0,,♪Ôi, tình yêu khuynh thế như ngọc,\Ntạo nên ta♪
Dialogue: 0,0:00:46.76,0:00:53.92,Default,,0,0,0,,♪Ôi, tơ tình vương vấn♪
Dialogue: 0,0:00:55.40,0:00:58.96,Default,,0,0,0,,♪Ta không sợ trên cõi đời này♪
Dialogue: 0,0:00:59.32,0:01:02.84,Default,,0,0,0,,♪Chúng sinh đối xử với ta ra sao♪
Dialogue: 0,0:01:03.48,0:01:06.64,Default,,0,0,0,,♪Đột phá, vùng vẫy♪
Dialogue: 0,0:01:06.96,0:01:11.24,Default,,0,0,0,,♪Làm sao để phân biệt chính tà, thiện ác♪
Dialogue: 0,0:01:11.68,0:01:14.96,Default,,0,0,0,,♪Từng có khoảnh khắc yếu đuối♪
Dialogue: 0,0:01:15.32,0:01:18.68,Default,,0,0,0,,♪Dùng nụ hôn tình yêu\Nđể vết thương lành lại♪
Dialogue: 0,0:01:19.20,0:01:22.64,Default,,0,0,0,,♪Sự tồn tại của ta♪
Dialogue: 0,0:01:23.16,0:01:29.68,Default,,0,0,0,,♪Sẽ không vì gai nhọn mà gãy cánh♪
Dialogue: 0,0:01:31.44,0:01:36.02,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:01:36.08,0:01:39.02,Default,,0,0,0,,[Tập 4]
Dialogue: 0,0:01:39.48,0:01:41.15,Default,,0,0,0,,Công chúa Nguyệt Nguyễn Nguyễn
Dialogue: 0,0:01:41.15,0:01:42.48,Default,,0,0,0,,hiền lương thục đức,
Dialogue: 0,0:01:43.31,0:01:45.28,Default,,0,0,0,,nay phong làm Nhu phi.
Dialogue: 0,0:01:45.79,0:01:47.23,Default,,0,0,0,,Hành lễ nghênh đón,
Dialogue: 0,0:01:47.95,0:01:49.40,Default,,0,0,0,,làm lễ thành hôn,
Dialogue: 0,0:01:49.79,0:01:51.23,Default,,0,0,0,,cả nước chung vui.
Dialogue: 0,0:01:52.43,0:01:55.43,Default,,0,0,0,,Cung chúc bệ hạ lương duyên vĩnh kết,
Dialogue: 0,0:01:55.95,0:01:57.76,Default,,0,0,0,,thiên thu muôn đời.
Dialogue: 0,0:02:06.46,0:02:14.26,Default,,0,0,0,,♪Chỉ để gặp được chàng\Nmà một đời ngóng trông xa xăm♪
Dialogue: 0,0:02:14.86,0:02:23.22,Default,,0,0,0,,♪Trở thành tia sáng bước trong bóng tối♪
Dialogue: 0,0:02:23.46,0:02:26.26,Default,,0,0,0,,♪Một giọt lệ, một tấc tro♪
Dialogue: 0,0:02:26.26,0:02:29.10,Default,,0,0,0,,♪Một nỗi niềm trăn trở♪
Dialogue: 0,0:02:29.10,0:02:32.34,Default,,0,0,0,,♪Một đời ngắn ngủi, một giấc mộng dài♪
Dialogue: 0,0:02:32.34,0:02:34.86,Default,,0,0,0,,[Bạc đầu không rời]
Dialogue: 0,0:02:40.19,0:02:41.43,Default,,0,0,0,,Chúc mừng bệ hạ.
Dialogue: 0,0:02:41.56,0:02:43.43,Default,,0,0,0,,Nhu phi đã có tin vui.
Dialogue: 0,0:02:44.52,0:02:45.19,Default,,0,0,0,,Cô cô.
Dialogue: 0,0:02:47.08,0:02:48.28,Default,,0,0,0,,[Chàng có biết khâu không?]
Dialogue: 0,0:02:48.84,0:02:49.43,Default,,0,0,0,,[Đương nhiên rồi.]
Dialogue: 0,0:02:53.19,0:02:54.84,Default,,0,0,0,,[Đây là y phục của con chúng ta.]
Dialogue: 0,0:02:55.40,0:02:57.31,Default,,0,0,0,,[Đương nhiên ta phải\Nđích thân khâu cho con.]
Dialogue: 0,0:02:58.96,0:03:00.96,Default,,0,0,0,,[Là một đứa trẻ được mong chờ.]
Dialogue: 0,0:03:03.91,0:03:05.19,Default,,0,0,0,,[Tình cảm họ đằm thắm là vậy,]
Dialogue: 0,0:03:05.71,0:03:07.00,Default,,0,0,0,,[sao Cảnh vương nỡ]
Dialogue: 0,0:03:07.00,0:03:08.80,Default,,0,0,0,,[để hắn tới nước Thịnh làm con tin?]
Dialogue: 0,0:03:12.43,0:03:13.08,Default,,0,0,0,,[Bệ hạ,]
Dialogue: 0,0:03:13.19,0:03:15.47,Default,,0,0,0,,[Nhu phi nương nương\Nkhó sinh suốt ba ngày nay rồi.]
Dialogue: 0,0:03:15.47,0:03:17.00,Default,,0,0,0,,[Thái Y Viện đã dùng hết cách.]
Dialogue: 0,0:03:17.00,0:03:19.63,Default,,0,0,0,,[Hiện tại e chỉ có thể giữ mẹ hoặc con.]
Dialogue: 0,0:03:19.91,0:03:21.40,Default,,0,0,0,,[Xin bệ hạ quyết định.]
Dialogue: 0,0:03:21.63,0:03:22.80,Default,,0,0,0,,[Chuyện này có gì cần quyết định?]
Dialogue: 0,0:03:23.08,0:03:24.28,Default,,0,0,0,,[Đương nhiên phải giữ Nhu phi.]
Dialogue: 0,0:03:24.71,0:03:25.84,Default,,0,0,0,,[Ta chỉ cần nàng ấy sống.]
Dialogue: 0,0:03:25.84,0:03:27.08,Default,,0,0,0,,[Mọi chuyện khác đều mặc kệ.]
Dialogue: 0,0:03:27.19,0:03:27.87,Default,,0,0,0,,[Mau đi đi.]
Dialogue: 0,0:03:28.08,0:03:28.71,Default,,0,0,0,,- [Vâng.]\N- Công chúa.
Dialogue: 0,0:03:29.00,0:03:30.19,Default,,0,0,0,,Công chúa, gắng lên.
Dialogue: 0,0:03:30.43,0:03:31.63,Default,,0,0,0,,Bệ hạ có chỉ,
Dialogue: 0,0:03:31.80,0:03:34.43,Default,,0,0,0,,phải đặt tính mạng Nhu phi nương nương\Nlên hàng đầu.
Dialogue: 0,0:03:34.43,0:03:35.03,Default,,0,0,0,,Công chúa.
Dialogue: 0,0:03:38.36,0:03:38.96,Default,,0,0,0,,[Lan An,]
Dialogue: 0,0:03:39.68,0:03:41.52,Default,,0,0,0,,[nhất định phải cứu lấy đứa bé này.]
Dialogue: 0,0:03:42.47,0:03:44.43,Default,,0,0,0,,[Không thể vì ta mà giết chết nó.]
Dialogue: 0,0:03:45.63,0:03:48.68,Default,,0,0,0,,[Nó nhất định sẽ là\Nmột đứa trẻ ngây thơ lương thiện.]
Dialogue: 0,0:03:49.96,0:03:50.80,Default,,0,0,0,,[Ta xin ngươi đấy.]
Dialogue: 0,0:03:53.00,0:03:53.75,Default,,0,0,0,,Quái vật!
Dialogue: 0,0:03:57.68,0:03:58.31,Default,,0,0,0,,Công chúa.
Dialogue: 0,0:03:58.75,0:03:59.84,Default,,0,0,0,,- Người đâu?\N- Công chúa.
Dialogue: 0,0:03:59.84,0:04:00.84,Default,,0,0,0,,Người đâu, mau tới đây.
Dialogue: 0,0:04:09.03,0:04:11.24,Default,,0,0,0,,[Nó không nên được sinh ra\Ntrên cõi đời này.]
Dialogue: 0,0:04:11.31,0:04:13.12,Default,,0,0,0,,[Chính nó đã hại chết Nhu phi,]
Dialogue: 0,0:04:13.80,0:04:15.63,Default,,0,0,0,,[hại chết người ta yêu thương nhất.]
Dialogue: 0,0:04:16.31,0:04:17.39,Default,,0,0,0,,Xin bệ hạ khai ân.
Dialogue: 0,0:04:18.63,0:04:19.19,Default,,0,0,0,,Bệ hạ,
Dialogue: 0,0:04:19.95,0:04:22.83,Default,,0,0,0,,từ khi tiểu điện hạ chào đời tới nay,
Dialogue: 0,0:04:22.95,0:04:24.43,Default,,0,0,0,,ngài ấy chưa được uống ngụm sữa nào.
Dialogue: 0,0:04:24.68,0:04:25.68,Default,,0,0,0,,Bệ hạ nhốt ngài ấy vào lãnh cung,
Dialogue: 0,0:04:25.68,0:04:26.87,Default,,0,0,0,,ngài ấy sẽ không chịu nổi mất.
Dialogue: 0,0:04:26.87,0:04:27.60,Default,,0,0,0,,Bệ hạ,
Dialogue: 0,0:04:27.87,0:04:28.95,Default,,0,0,0,,cầu xin bệ hạ khai ân.
Dialogue: 0,0:04:29.31,0:04:30.60,Default,,0,0,0,,Cầu xin bệ hạ khai ân.
Dialogue: 0,0:04:31.19,0:04:32.31,Default,,0,0,0,,Nó không phải con trai ta.
Dialogue: 0,0:04:32.60,0:04:33.56,Default,,0,0,0,,Nó là quái vật!
Dialogue: 0,0:04:34.16,0:04:34.83,Default,,0,0,0,,Bệ hạ,
Dialogue: 0,0:04:36.43,0:04:39.27,Default,,0,0,0,,tiểu điện hạ\Nlà máu mủ duy nhất của công chúa.
Dialogue: 0,0:04:43.60,0:04:44.19,Default,,0,0,0,,Bệ hạ,
Dialogue: 0,0:04:44.63,0:04:46.16,Default,,0,0,0,,nếu tiểu điện hạ ra đi,
Dialogue: 0,0:04:46.68,0:04:49.68,Default,,0,0,0,,công chúa sẽ thật sự\Nkhông còn trên cõi đời này nữa, bệ hạ.
Dialogue: 0,0:04:50.56,0:04:52.00,Default,,0,0,0,,Xin bệ hạ khai ân.
Dialogue: 0,0:04:56.92,0:04:58.43,Default,,0,0,0,,Nếu ngươi khăng khăng đòi bảo vệ nó,
Dialogue: 0,0:04:59.56,0:05:00.51,Default,,0,0,0,,thì ngươi hãy mang theo nó
Dialogue: 0,0:05:01.07,0:05:02.75,Default,,0,0,0,,tự sinh tự diệt trong cung đi.
Dialogue: 0,0:05:03.39,0:05:04.19,Default,,0,0,0,,Tạ ơn bệ hạ.
Dialogue: 0,0:05:05.04,0:05:05.87,Default,,0,0,0,,Tạ ơn bệ hạ.
Dialogue: 0,0:05:05.87,0:05:06.68,Default,,0,0,0,,Tạ ơn bệ hạ.
Dialogue: 0,0:05:08.80,0:05:09.39,Default,,0,0,0,,Mau đi thôi.
Dialogue: 0,0:05:13.75,0:05:14.27,Default,,0,0,0,,Bệ hạ,
Dialogue: 0,0:05:14.27,0:05:16.00,Default,,0,0,0,,đây là những cái tên cát tường mà Lễ Bộ
Dialogue: 0,0:05:16.00,0:05:16.80,Default,,0,0,0,,chọn cho tiểu điện hạ.
Dialogue: 0,0:05:16.80,0:05:18.07,Default,,0,0,0,,Xin bệ hạ hãy quyết định.
Dialogue: 0,0:05:57.00,0:05:58.12,Default,,0,0,0,,Thần hiểu rồi.
Dialogue: 0,0:06:04.43,0:06:06.19,Default,,0,0,0,,[Cái tên của những đứa trẻ trong thiên hạ]
Dialogue: 0,0:06:07.12,0:06:08.51,Default,,0,0,0,,[Tẫn]\N[đều là kỳ vọng của cha mẹ.]
Dialogue: 0,0:06:09.95,0:06:11.31,Default,,0,0,0,,[Còn tên của Đàm Đài Tẫn]
Dialogue: 0,0:06:12.72,0:06:13.92,Default,,0,0,0,,[lại là lời nguyền rủa.]
Dialogue: 0,0:06:51.19,0:06:52.80,Default,,0,0,0,,[Sao lại có kẻ vẫn còn tỉnh?]
Dialogue: 0,0:06:57.87,0:06:58.43,Default,,0,0,0,,Cẩn thận!
Dialogue: 0,0:07:01.56,0:07:02.19,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:07:02.80,0:07:03.51,Default,,0,0,0,,Đàm Đài Tẫn!
Dialogue: 0,0:07:14.72,0:07:16.39,Default,,0,0,0,,Ta mới rời đi một lúc,
Dialogue: 0,0:07:16.68,0:07:18.04,Default,,0,0,0,,mà hai ngươi đã thoát được rồi.
Dialogue: 0,0:07:18.63,0:07:20.00,Default,,0,0,0,,Giỏi thật đấy!
Dialogue: 0,0:07:20.83,0:07:22.36,Default,,0,0,0,,Vốn dĩ ta còn ngờ vực,
Dialogue: 0,0:07:22.72,0:07:24.36,Default,,0,0,0,,không hiểu sao ngươi không có ác mộng.
Dialogue: 0,0:07:25.60,0:07:28.24,Default,,0,0,0,,Thì ra ngươi không có tơ tình.
Dialogue: 0,0:07:32.31,0:07:33.12,Default,,0,0,0,,Không có cái gì?
Dialogue: 0,0:07:34.60,0:07:36.16,Default,,0,0,0,,Ngươi trời sinh không có tơ tình
Dialogue: 0,0:07:36.31,0:07:37.80,Default,,0,0,0,,nên không cảm nhận được tình cảm.
Dialogue: 0,0:07:38.31,0:07:40.19,Default,,0,0,0,,Không biết vui, không biết buồn,
Dialogue: 0,0:07:40.19,0:07:42.00,Default,,0,0,0,,cũng không cảm thấy sợ hãi.
Dialogue: 0,0:07:43.83,0:07:45.83,Default,,0,0,0,,Người vô cảm vô tình\Nthì lấy đâu ra ác mộng?
Dialogue: 0,0:07:46.19,0:07:47.48,Default,,0,0,0,,Vậy chẳng phải là đã lãng phí
Dialogue: 0,0:07:47.48,0:07:49.43,Default,,0,0,0,,những ký ức bi thảm của ngươi sao?
Dialogue: 0,0:07:50.07,0:07:50.72,Default,,0,0,0,,Tuy nhiên,
Dialogue: 0,0:07:51.27,0:07:53.68,Default,,0,0,0,,vừa rồi cuối cùng ta cũng\Ntìm ra nhược điểm của ngươi.
Dialogue: 0,0:07:55.00,0:07:58.56,Default,,0,0,0,,Chung quy trên đời này\Ncũng có thứ khiến ngươi để tâm,
Dialogue: 0,0:07:59.04,0:08:01.19,Default,,0,0,0,,dù chỉ là một chút thế này,
Dialogue: 0,0:08:01.68,0:08:03.36,Default,,0,0,0,,nhưng cũng đã đủ rồi.
Dialogue: 0,0:08:06.19,0:08:08.31,Default,,0,0,0,,Hãy thỏa thích hưởng thụ\Nác mộng của ngươi đi!
Dialogue: 0,0:08:26.12,0:08:27.27,Default,,0,0,0,,Nơi nào đây?
Dialogue: 0,0:08:33.36,0:08:34.75,Default,,0,0,0,,Trẻ con làm sao ở đây được?
Dialogue: 0,0:08:36.03,0:08:37.03,Default,,0,0,0,,Sẽ chết cóng mất.
Dialogue: 0,0:08:37.60,0:08:38.72,Default,,0,0,0,,Mau đi tìm đi.
Dialogue: 0,0:08:39.03,0:08:40.48,Default,,0,0,0,,Tìm đi…
Dialogue: 0,0:08:42.36,0:08:43.55,Default,,0,0,0,,[Xem ra ta và Đàm Đài Tẫn]
Dialogue: 0,0:08:43.55,0:08:45.15,Default,,0,0,0,,[đã bước vào không gian khác nhau.]
Dialogue: 0,0:08:46.15,0:08:46.75,Default,,0,0,0,,[Không được,]
Dialogue: 0,0:08:47.24,0:08:48.60,Default,,0,0,0,,[nhất định phải mau chóng\Ntìm ra Tiểu Ma Thần.]
Dialogue: 0,0:08:50.75,0:08:52.48,Default,,0,0,0,,Linh giám động chiếu, mộng huyễn bào ảnh.
Dialogue: 0,0:08:52.48,0:08:53.03,Default,,0,0,0,,Phá.
Dialogue: 0,0:09:04.67,0:09:05.63,Default,,0,0,0,,[Không có Trùng Vũ,]
Dialogue: 0,0:09:05.63,0:09:07.44,Default,,0,0,0,,[quả thật sức mạnh của ta\Nkhông đủ để phá hủy kết giới.]
Dialogue: 0,0:09:08.03,0:09:10.48,Default,,0,0,0,,[Xem ra phải chờ\Nhồi ức của Oánh Tâm kết thúc]
Dialogue: 0,0:09:10.48,0:09:11.32,Default,,0,0,0,,[thì mới thoát ra được.]
Dialogue: 0,0:09:11.44,0:09:12.00,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:09:12.00,0:09:13.48,Default,,0,0,0,,[Mong Tiểu Ma Thần không gặp bất trắc.]
Dialogue: 0,0:09:13.48,0:09:14.12,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:09:17.12,0:09:17.72,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:09:22.63,0:09:23.24,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:09:23.96,0:09:24.51,Default,,0,0,0,,Đừng mà.
Dialogue: 0,0:09:25.36,0:09:26.55,Default,,0,0,0,,Làm sao đây, Lan An tỷ tỷ?
Dialogue: 0,0:09:27.12,0:09:28.15,Default,,0,0,0,,Điện hạ không thở nữa rồi.
Dialogue: 0,0:09:28.32,0:09:29.12,Default,,0,0,0,,Không được nói linh tinh.
Dialogue: 0,0:09:31.67,0:09:33.55,Default,,0,0,0,,Điện hạ…
Dialogue: 0,0:09:58.51,0:10:00.20,Default,,0,0,0,,Tại sao sau khi hút máu\Nngài ấy lại tỉnh dậy?
Dialogue: 0,0:10:02.03,0:10:03.32,Default,,0,0,0,,Ngài ấy là một quái vật.
Dialogue: 0,0:10:07.20,0:10:08.60,Default,,0,0,0,,Sao vừa sinh ra ngài ấy đã có răng?
Dialogue: 0,0:10:09.08,0:10:10.63,Default,,0,0,0,,Sau này không được nói\Nnhững lời như vậy nữa.
Dialogue: 0,0:10:12.44,0:10:14.08,Default,,0,0,0,,Càng không được để người khác\Nbiết chuyện này.
Dialogue: 0,0:10:15.67,0:10:17.12,Default,,0,0,0,,[Không hổ là Tiểu Ma Thần.]
Dialogue: 0,0:10:19.51,0:10:22.00,Default,,0,0,0,,[Nhưng đại chiến Thần Ma\Nđã trôi qua cả vạn năm,]
Dialogue: 0,0:10:22.87,0:10:25.39,Default,,0,0,0,,[sao hắn lại chào đời\Nvào lúc này, tại nơi đây?]
Dialogue: 0,0:10:49.72,0:10:50.67,Default,,0,0,0,,Nào…
Dialogue: 0,0:10:50.67,0:10:51.75,Default,,0,0,0,,Tiểu điện hạ ngoan nào.
Dialogue: 0,0:10:52.15,0:10:53.15,Default,,0,0,0,,Ngoan nào, có đồ ăn ngon rồi đây.
Dialogue: 0,0:10:53.15,0:10:53.67,Default,,0,0,0,,Ngoan nhé.
Dialogue: 0,0:10:54.20,0:10:54.79,Default,,0,0,0,,Nào.
Dialogue: 0,0:11:00.84,0:11:01.12,Default,,0,0,0,,Ngoan nhé.
Dialogue: 0,0:11:01.12,0:11:02.32,Default,,0,0,0,,[Dù cuộc sống gian khổ,]
Dialogue: 0,0:11:03.03,0:11:05.36,Default,,0,0,0,,[nhưng dẫu sao cũng có người\Ndốc hết tất cả chăm sóc hắn.]
Dialogue: 0,0:11:06.36,0:11:07.72,Default,,0,0,0,,[Chỉ là cuộc sống thế này,]
Dialogue: 0,0:11:09.36,0:11:10.84,Default,,0,0,0,,[họ còn có thể kiên trì bao lâu nữa đây?]
Dialogue: 0,0:11:15.12,0:11:15.79,Default,,0,0,0,,Cầm đi.
Dialogue: 0,0:11:41.27,0:11:42.08,Default,,0,0,0,,Ăn được đấy.
Dialogue: 0,0:11:42.48,0:11:43.03,Default,,0,0,0,,Muội nhìn này.
Dialogue: 0,0:11:50.24,0:11:51.08,Default,,0,0,0,,Đừng khóc nữa.
Dialogue: 0,0:11:52.44,0:11:52.96,Default,,0,0,0,,Được rồi.
Dialogue: 0,0:11:56.63,0:11:57.32,Default,,0,0,0,,Đừng khóc nữa.
Dialogue: 0,0:12:01.63,0:12:02.67,Default,,0,0,0,,Quỳ xuống…
Dialogue: 0,0:12:02.67,0:12:03.79,Default,,0,0,0,,Quỳ xuống…
Dialogue: 0,0:12:03.79,0:12:04.79,Default,,0,0,0,,Hôm nay ta sẽ bắt nó
Dialogue: 0,0:12:04.79,0:12:06.27,Default,,0,0,0,,làm chó con cho mọi người nhé?
Dialogue: 0,0:12:06.72,0:12:07.75,Default,,0,0,0,,Được.
Dialogue: 0,0:12:08.24,0:12:10.87,Default,,0,0,0,,- Sủa đi.\N- Sủa đi.
Dialogue: 0,0:12:11.27,0:12:12.20,Default,,0,0,0,,- Mau lên.\N- Sủa đi.
Dialogue: 0,0:12:13.36,0:12:14.32,Default,,0,0,0,,- Mau sủa đi.\N- Sủa đi nhanh lên.
Dialogue: 0,0:12:14.79,0:12:15.67,Default,,0,0,0,,Mau lên.
Dialogue: 0,0:12:15.67,0:12:17.84,Default,,0,0,0,,Sủa đi…
Dialogue: 0,0:12:22.91,0:12:23.91,Default,,0,0,0,,Ngươi mau sủa đi.
Dialogue: 0,0:12:23.91,0:12:25.44,Default,,0,0,0,,- Sủa đi.\N- Sủa đi mau lên.
Dialogue: 0,0:12:29.20,0:12:30.08,Default,,0,0,0,,Chó con.
Dialogue: 0,0:12:31.39,0:12:32.32,Default,,0,0,0,,Lũ ranh con này.
Dialogue: 0,0:12:32.32,0:12:33.03,Default,,0,0,0,,Mau lên.
Dialogue: 0,0:12:34.51,0:12:35.08,Default,,0,0,0,,Cho nó đi.
Dialogue: 0,0:12:37.32,0:12:39.15,Default,,0,0,0,,Ngài không thể quỳ trước đám nô tài đó,
Dialogue: 0,0:12:39.15,0:12:40.75,Default,,0,0,0,,càng không được bắt chước chó sủa,\Nngài hiểu không?
Dialogue: 0,0:12:41.39,0:12:43.20,Default,,0,0,0,,Chúng nói chỉ cần ta bắt chước chó sủa,
Dialogue: 0,0:12:43.44,0:12:44.51,Default,,0,0,0,,chúng sẽ không đánh ta nữa
Dialogue: 0,0:12:44.96,0:12:46.03,Default,,0,0,0,,mà còn cho ta đồ ăn.
Dialogue: 0,0:12:48.84,0:12:50.32,Default,,0,0,0,,Ngài không biết thế nào là tự tôn sao?
Dialogue: 0,0:12:50.96,0:12:52.55,Default,,0,0,0,,Ngài bẩm sinh đã không biết nhục nhã ư?
Dialogue: 0,0:12:53.72,0:12:55.91,Default,,0,0,0,,[Ngươi là con của quân vương\Nmà mặc cho lũ nô tài sỉ nhục,]
Dialogue: 0,0:12:56.08,0:12:57.75,Default,,0,0,0,,[ngươi không thấy nhục nhã chút nào ư?]
Dialogue: 0,0:12:58.15,0:12:59.24,Default,,0,0,0,,[Nhục nhã?]
Dialogue: 0,0:12:59.87,0:13:02.15,Default,,0,0,0,,[Thứ đó chẳng có nghĩa lý gì với ta.]
Dialogue: 0,0:13:02.79,0:13:04.72,Default,,0,0,0,,[Bát cơm này còn quan trọng hơn.]
Dialogue: 0,0:13:07.39,0:13:08.67,Default,,0,0,0,,Chúng sỉ nhục ngài như vậy,
Dialogue: 0,0:13:08.84,0:13:09.84,Default,,0,0,0,,ngài không buồn sao?
Dialogue: 0,0:13:10.27,0:13:11.91,Default,,0,0,0,,Nhục nhã là gì?
Dialogue: 0,0:13:11.96,0:13:13.00,Default,,0,0,0,,Buồn là gì?
Dialogue: 0,0:13:14.84,0:13:16.39,Default,,0,0,0,,Chúng đang đùa bỡn với ngài đấy.
Dialogue: 0,0:13:17.08,0:13:18.51,Default,,0,0,0,,Không phải chúng muốn cho ta đồ ăn sao?
Dialogue: 0,0:13:19.27,0:13:20.15,Default,,0,0,0,,Không phải.
Dialogue: 0,0:13:21.75,0:13:22.84,Default,,0,0,0,,Ra là vậy.
Dialogue: 0,0:13:23.60,0:13:25.00,Default,,0,0,0,,Vậy ta có thể giết chúng không?
Dialogue: 0,0:13:29.44,0:13:31.44,Default,,0,0,0,,[Đây chính là Ma Thần trời sinh ư?]
Dialogue: 0,0:13:32.15,0:13:33.08,Default,,0,0,0,,Ta không chịu nổi nữa rồi.
Dialogue: 0,0:13:33.15,0:13:34.87,Default,,0,0,0,,Tiểu điện hạ thật sự không bình thường.
Dialogue: 0,0:13:34.87,0:13:35.67,Default,,0,0,0,,Ngài ấy là một quái vật.
Dialogue: 0,0:13:36.03,0:13:37.00,Default,,0,0,0,,Ăn nói lung tung gì vậy?
Dialogue: 0,0:13:37.00,0:13:39.51,Default,,0,0,0,,Ngài ấy mới sáu tuổi, còn là một đứa bé.
Dialogue: 0,0:13:39.96,0:13:40.96,Default,,0,0,0,,Muội thấy ngài ấy kỳ lạ,
Dialogue: 0,0:13:40.96,0:13:41.63,Default,,0,0,0,,là bởi
Dialogue: 0,0:13:41.63,0:13:43.27,Default,,0,0,0,,ngài ấy sống ở lãnh cung
Dialogue: 0,0:13:43.27,0:13:44.60,Default,,0,0,0,,bị người ta ức hiếp suốt bao năm.
Dialogue: 0,0:13:44.72,0:13:45.44,Default,,0,0,0,,Hiểu chưa?
Dialogue: 0,0:13:45.87,0:13:46.67,Default,,0,0,0,,Nhưng mà,
Dialogue: 0,0:13:47.24,0:13:49.63,Default,,0,0,0,,chúng ta sắp dùng hết\Ntiền bạc, trang sức rồi.
Dialogue: 0,0:13:50.87,0:13:53.15,Default,,0,0,0,,Cứ tiếp tục thế này\Ncũng không phải là kế lâu dài.
Dialogue: 0,0:13:53.48,0:13:54.12,Default,,0,0,0,,Vậy đi,
Dialogue: 0,0:13:54.36,0:13:57.15,Default,,0,0,0,,mấy hôm nữa sẽ tới ngày\Ncung nữ được rời cung.
Dialogue: 0,0:13:57.15,0:13:58.20,Default,,0,0,0,,Ta sẽ nghĩ cách ra ngoài,
Dialogue: 0,0:13:58.51,0:13:59.67,Default,,0,0,0,,tới tộc Di Nguyệt xin giúp đỡ.
Dialogue: 0,0:14:00.84,0:14:01.63,Default,,0,0,0,,Vậy còn ta thì sao?
Dialogue: 0,0:14:03.84,0:14:04.44,Default,,0,0,0,,Oánh Tâm,
Dialogue: 0,0:14:05.36,0:14:06.32,Default,,0,0,0,,ta phải nhờ muội
Dialogue: 0,0:14:06.72,0:14:08.39,Default,,0,0,0,,một mình chăm sóc\Ncho điện hạ một thời gian.
Dialogue: 0,0:14:10.72,0:14:11.79,Default,,0,0,0,,Điện hạ kế thừa khả năng
Dialogue: 0,0:14:11.79,0:14:13.12,Default,,0,0,0,,trò chuyện với chim muông của công chúa.
Dialogue: 0,0:14:13.63,0:14:15.00,Default,,0,0,0,,Ngài ấy là hy vọng của tộc Di Nguyệt.
Dialogue: 0,0:14:15.48,0:14:16.60,Default,,0,0,0,,Chúng ta buộc phải cứu ngài ấy.
Dialogue: 0,0:14:18.03,0:14:18.75,Default,,0,0,0,,[Muội yên tâm,]
Dialogue: 0,0:14:19.44,0:14:20.87,Default,,0,0,0,,[tỷ tỷ sẽ đi nhanh về nhanh,]
Dialogue: 0,0:14:21.44,0:14:23.67,Default,,0,0,0,,[nhất định sẽ mau chóng\Nđón muội và điện hạ]
Dialogue: 0,0:14:23.87,0:14:24.87,Default,,0,0,0,,[về tộc Di Nguyệt.]
Dialogue: 0,0:14:26.12,0:14:26.91,Default,,0,0,0,,[Hãy tin ta.]
Dialogue: 0,0:14:43.51,0:14:44.15,Default,,0,0,0,,Có đau không?
Dialogue: 0,0:14:46.75,0:14:47.96,Default,,0,0,0,,Đa tạ điện tạ đã quan tâm.
Dialogue: 0,0:14:49.15,0:14:50.39,Default,,0,0,0,,Oánh Tâm quen rồi.
Dialogue: 0,0:14:51.55,0:14:52.87,Default,,0,0,0,,Đàm Đài Tẫn đang ở đâu?
Dialogue: 0,0:14:55.15,0:14:56.36,Default,,0,0,0,,Mau tới tiếp chỉ.
Dialogue: 0,0:14:59.91,0:15:01.32,Default,,0,0,0,,Chắc chắn là Lan An tới cứu chúng ta rồi.
Dialogue: 0,0:15:02.00,0:15:02.91,Default,,0,0,0,,Điện hạ ở đây.
Dialogue: 0,0:15:06.24,0:15:07.39,Default,,0,0,0,,Bệ hạ có chỉ,
Dialogue: 0,0:15:07.63,0:15:09.72,Default,,0,0,0,,lệnh cho Đàm Đài Tẫn lập tức lên đường
Dialogue: 0,0:15:09.91,0:15:10.84,Default,,0,0,0,,tới nước Thịnh làm tin.
Dialogue: 0,0:15:13.39,0:15:14.67,Default,,0,0,0,,Tới nước Thịnh làm tin nghĩa là gì?
Dialogue: 0,0:15:14.67,0:15:15.55,Default,,0,0,0,,Ngươi còn hỏi sao?
Dialogue: 0,0:15:15.60,0:15:17.44,Default,,0,0,0,,Chúng ta bị nước Thịnh đánh bại.
Dialogue: 0,0:15:17.44,0:15:18.44,Default,,0,0,0,,Để nghị hòa,
Dialogue: 0,0:15:18.44,0:15:21.12,Default,,0,0,0,,bệ hạ lệnh cho Đàm Đài Tẫn\Ntới nước Thịnh làm con tin.
Dialogue: 0,0:15:21.12,0:15:22.12,Default,,0,0,0,,Hôm nay sẽ xuất phát.
Dialogue: 0,0:15:22.27,0:15:23.12,Default,,0,0,0,,Hiểu chưa?
Dialogue: 0,0:15:24.03,0:15:26.27,Default,,0,0,0,,Hai ngươi ra thu dọn đồ giúp họ đi.
Dialogue: 0,0:15:27.08,0:15:27.67,Default,,0,0,0,,- Vâng.\N- Vâng.
Dialogue: 0,0:15:31.39,0:15:33.79,Default,,0,0,0,,Kinh Lan An, đồ lừa gạt!
Dialogue: 0,0:15:33.96,0:15:35.96,Default,,0,0,0,,Ngươi bỏ chạy một mình,\Nmặc kệ sự sống chết của ta.
Dialogue: 0,0:15:36.24,0:15:37.24,Default,,0,0,0,,Đồ lừa gạt!
Dialogue: 0,0:15:38.12,0:15:38.84,Default,,0,0,0,,Đồ lừa gạt!
Dialogue: 0,0:15:40.27,0:15:41.08,Default,,0,0,0,,Đồ lừa gạt!
Dialogue: 0,0:15:47.15,0:15:48.63,Default,,0,0,0,,[Đây đã là nước Thịnh rồi.]
Dialogue: 0,0:15:55.55,0:15:56.36,Default,,0,0,0,,Ngô tổng quản.
Dialogue: 0,0:15:56.48,0:15:59.27,Default,,0,0,0,,Ngươi tên là Nguyệt Oánh Tâm,
Dialogue: 0,0:15:59.55,0:16:02.36,Default,,0,0,0,,là tỳ nữ con tin nước Cảnh đưa tới?
Dialogue: 0,0:16:04.60,0:16:06.51,Default,,0,0,0,,Ngươi tới đưa điểm tâm cho con tin sao?
Dialogue: 0,0:16:09.03,0:16:11.00,Default,,0,0,0,,Ta cũng đâu ăn thịt ngươi.
Dialogue: 0,0:16:11.27,0:16:12.32,Default,,0,0,0,,Mang vào đi.
Dialogue: 0,0:16:12.79,0:16:13.36,Default,,0,0,0,,Dạ.
Dialogue: 0,0:16:16.15,0:16:19.03,Default,,0,0,0,,[Lão già háo sắc này thật là ghê tởm.]
Dialogue: 0,0:16:27.24,0:16:27.87,Default,,0,0,0,,Điện hạ!
Dialogue: 0,0:16:31.48,0:16:32.96,Default,,0,0,0,,Giữ ả tiện tỳ này lại cho ta.
Dialogue: 0,0:16:33.63,0:16:34.44,Default,,0,0,0,,Các người làm gì vậy?
Dialogue: 0,0:16:34.67,0:16:35.44,Default,,0,0,0,,Buông ta ra.
Dialogue: 0,0:16:35.67,0:16:37.55,Default,,0,0,0,,Điện hạ…
Dialogue: 0,0:16:37.91,0:16:38.51,Default,,0,0,0,,Điện hạ!
Dialogue: 0,0:16:39.87,0:16:40.55,Default,,0,0,0,,Điện hạ!
Dialogue: 0,0:16:42.79,0:16:44.32,Default,,0,0,0,,Họ nói ngươi là tên quái thai,
Dialogue: 0,0:16:44.60,0:16:45.44,Default,,0,0,0,,không biết khóc.
Dialogue: 0,0:16:47.00,0:16:48.32,Default,,0,0,0,,Ta không tin trên đời này
Dialogue: 0,0:16:48.32,0:16:49.55,Default,,0,0,0,,có kẻ không biết khóc.
Dialogue: 0,0:16:49.55,0:16:50.72,Default,,0,0,0,,Khóc cho ta xem thử đi,
Dialogue: 0,0:16:50.72,0:16:51.67,Default,,0,0,0,,ta sẽ thả ngươi ra.
Dialogue: 0,0:16:51.84,0:16:53.15,Default,,0,0,0,,Ta thật sự không biết khóc.
Dialogue: 0,0:17:02.72,0:17:03.60,Default,,0,0,0,,Điện hạ!
Dialogue: 0,0:17:05.83,0:17:07.40,Default,,0,0,0,,Sao, đau không?
Dialogue: 0,0:17:09.88,0:17:11.51,Default,,0,0,0,,Điện hạ con tin vẫn chưa khóc sao?
Dialogue: 0,0:17:13.48,0:17:14.51,Default,,0,0,0,,Ngươi không được dừng lại.
Dialogue: 0,0:17:14.83,0:17:16.44,Default,,0,0,0,,Bẻ gãy cả cánh tay còn lại của nó cho ta.
Dialogue: 0,0:17:16.75,0:17:17.35,Default,,0,0,0,,Vâng.
Dialogue: 0,0:17:18.59,0:17:19.24,Default,,0,0,0,,Dừng tay lại.
Dialogue: 0,0:17:27.75,0:17:29.83,Default,,0,0,0,,Khấu kiến lục điện hạ.
Dialogue: 0,0:17:31.40,0:17:32.35,Default,,0,0,0,,Đứng dậy cả đi.
Dialogue: 0,0:17:39.03,0:17:39.68,Default,,0,0,0,,Ngũ ca.
Dialogue: 0,0:17:39.96,0:17:42.03,Default,,0,0,0,,Đàm Đài điện hạ bỏ nước rời đô,
Dialogue: 0,0:17:42.16,0:17:43.64,Default,,0,0,0,,đến nước Thịnh chúng ta làm khách,
Dialogue: 0,0:17:43.88,0:17:45.48,Default,,0,0,0,,là vì mối bang giao của hai nước,
Dialogue: 0,0:17:45.72,0:17:47.20,Default,,0,0,0,,hơn nữa là để muôn dân trăm họ
Dialogue: 0,0:17:47.48,0:17:49.11,Default,,0,0,0,,không phải chịu nỗi khổ chiến loạn.
Dialogue: 0,0:17:49.11,0:17:50.75,Default,,0,0,0,,Chúng ta nên đối đãi với ngài ấy\Ntheo lễ nghĩa,
Dialogue: 0,0:17:50.96,0:17:52.72,Default,,0,0,0,,sao có thể mặc sức ức hiếp như vậy?
Dialogue: 0,0:17:54.07,0:17:55.07,Default,,0,0,0,,Đúng là mất cả hứng.
Dialogue: 0,0:17:55.64,0:17:56.20,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:18:02.03,0:18:03.79,Default,,0,0,0,,Điện hạ…
Dialogue: 0,0:18:08.07,0:18:09.27,Default,,0,0,0,,Đa tạ lục điện hạ đã cứu giúp.
Dialogue: 0,0:18:10.24,0:18:10.83,Default,,0,0,0,,Không có gì.
Dialogue: 0,0:18:11.35,0:18:13.00,Default,,0,0,0,,Là tại ngũ ca ta vô lễ trước.
Dialogue: 0,0:18:13.20,0:18:14.79,Default,,0,0,0,,Khí sắc Đàm Đài điện hạ kém quá,
Dialogue: 0,0:18:14.79,0:18:16.07,Default,,0,0,0,,chi bằng hãy về nghỉ trước.
Dialogue: 0,0:18:16.20,0:18:17.68,Default,,0,0,0,,Ta sẽ giúp điện hạ giải thích với phu tử.
Dialogue: 0,0:18:18.96,0:18:20.92,Default,,0,0,0,,Nào, cảm ơn lục điện hạ.
Dialogue: 0,0:18:28.24,0:18:29.59,Default,,0,0,0,,Tại sao lục điện hạ đó
Dialogue: 0,0:18:29.75,0:18:31.96,Default,,0,0,0,,lại bảo ca ca của mình dừng tay?
Dialogue: 0,0:18:31.96,0:18:34.59,Default,,0,0,0,,Lại còn có thể khiến\Nđám công tử quyền quý đó phải sợ mình nữa?
Dialogue: 0,0:18:35.24,0:18:36.20,Default,,0,0,0,,Nô tỳ nghe nói,
Dialogue: 0,0:18:36.40,0:18:38.24,Default,,0,0,0,,mẫu hậu của lục điện hạ\Nvừa là chính thất,
Dialogue: 0,0:18:38.35,0:18:39.40,Default,,0,0,0,,vừa được sủng ái nhất hậu cung.
Dialogue: 0,0:18:40.03,0:18:41.92,Default,,0,0,0,,Người trong cung\Nlàm việc gì cũng nhìn sắc mặt người khác,
Dialogue: 0,0:18:42.24,0:18:43.72,Default,,0,0,0,,dĩ nhiên sẽ kiêng dè ngài ấy.
Dialogue: 0,0:18:44.40,0:18:45.16,Default,,0,0,0,,Mẫu thân?
Dialogue: 0,0:18:45.64,0:18:47.27,Default,,0,0,0,,Vậy nếu lục điện hạ không có mẫu thân,
Dialogue: 0,0:18:47.27,0:18:49.20,Default,,0,0,0,,thì có phải cũng sẽ giống ta không?
Dialogue: 0,0:18:56.68,0:19:00.40,Default,,0,0,0,,Thật ra nô tỳ\Nnói cũng không đúng hoàn toàn.
Dialogue: 0,0:19:00.83,0:19:03.24,Default,,0,0,0,,Dù có mẫu thân\Nthân phận cao quý, được sủng ái
Dialogue: 0,0:19:03.83,0:19:06.55,Default,,0,0,0,,nhưng lục điện hạ lễ độ ôn hòa,\Nthông minh nhân hậu,
Dialogue: 0,0:19:06.88,0:19:08.27,Default,,0,0,0,,ai lại không thích ngài ấy chứ?
Dialogue: 0,0:19:09.07,0:19:10.03,Default,,0,0,0,,Vậy sao?
Dialogue: 0,0:19:10.68,0:19:12.31,Default,,0,0,0,,[Nếu ta cũng giống lục điện hạ,]
Dialogue: 0,0:19:12.59,0:19:14.64,Default,,0,0,0,,[có phải người khác cũng sẽ thích ta,]
Dialogue: 0,0:19:14.64,0:19:16.03,Default,,0,0,0,,[không gây phiền phức cho ta nữa không?]
Dialogue: 0,0:20:08.34,0:20:09.22,Default,,0,0,0,,[Địa lý tứ châu]
Dialogue: 0,0:20:09.24,0:20:10.55,Default,,0,0,0,,[Địa lý tứ châu]\NĐịa lý tứ châu?
Dialogue: 0,0:20:11.07,0:20:12.40,Default,,0,0,0,,Điện hạ đọc cái này làm gì?
Dialogue: 0,0:20:13.59,0:20:15.68,Default,,0,0,0,,Nghe nói Tiêu Lẫm\Nđã khởi hành tới núi Bất Chiếu,
Dialogue: 0,0:20:15.88,0:20:17.35,Default,,0,0,0,,định tu hành ba năm tại đó.
Dialogue: 0,0:20:18.07,0:20:19.55,Default,,0,0,0,,Ta không biết đó là nơi nào,
Dialogue: 0,0:20:20.20,0:20:21.55,Default,,0,0,0,,nên muốn tìm trong sách.
Dialogue: 0,0:20:29.44,0:20:32.11,Default,,0,0,0,,Có kẻ thậm chí còn\Nchẳng ra khỏi tường cung được,
Dialogue: 0,0:20:32.11,0:20:34.07,Default,,0,0,0,,mà còn ở đây mơ mộng hão huyền
Dialogue: 0,0:20:34.07,0:20:35.96,Default,,0,0,0,,tiên sơn bồng lai gì đó.
Dialogue: 0,0:20:36.72,0:20:39.48,Default,,0,0,0,,Học pháp thuật vì muốn bay ra ngoài à?
Dialogue: 0,0:20:49.83,0:20:50.59,Default,,0,0,0,,Ngũ điện hạ.
Dialogue: 0,0:20:55.51,0:20:56.55,Default,,0,0,0,,Khốn kiếp!
Dialogue: 0,0:20:56.59,0:20:57.20,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:21:00.31,0:21:01.24,Default,,0,0,0,,Điện hạ không sao chứ?
Dialogue: 0,0:21:01.44,0:21:02.11,Default,,0,0,0,,Ngũ điện hạ,
Dialogue: 0,0:21:03.11,0:21:04.24,Default,,0,0,0,,sao ngài lại ra tay đánh người?
Dialogue: 0,0:21:04.44,0:21:05.07,Default,,0,0,0,,Tại sao hả?
Dialogue: 0,0:21:06.44,0:21:08.44,Default,,0,0,0,,Vì ngươi cười trông rất buồn nôn.
Dialogue: 0,0:21:08.83,0:21:09.92,Default,,0,0,0,,Ta nói cho ngươi biết,
Dialogue: 0,0:21:10.24,0:21:12.31,Default,,0,0,0,,ta nhẫn nhịn\Ntên quái thai nhà ngươi lâu lắm rồi.
Dialogue: 0,0:21:12.68,0:21:14.31,Default,,0,0,0,,Giờ Tiêu Lẫm không ở đây,
Dialogue: 0,0:21:14.35,0:21:15.79,Default,,0,0,0,,để ta xem trong cung ai dám bảo vệ ngươi?
Dialogue: 0,0:21:15.79,0:21:16.72,Default,,0,0,0,,Đánh hắn cho ta.
Dialogue: 0,0:21:18.03,0:21:18.64,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:21:19.79,0:21:21.31,Default,,0,0,0,,Đừng đánh nữa…
Dialogue: 0,0:21:22.00,0:21:22.75,Default,,0,0,0,,Đừng đánh mà.
Dialogue: 0,0:21:26.51,0:21:27.16,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:21:35.64,0:21:36.64,Default,,0,0,0,,Vốn dĩ ta cho rằng,
Dialogue: 0,0:21:37.35,0:21:40.20,Default,,0,0,0,,mấy năm nay\Nchúng không gây phiền phức cho ta nữa,
Dialogue: 0,0:21:40.88,0:21:42.79,Default,,0,0,0,,là vì ta làm gì cũng bắt chước Tiêu Lẫm,
Dialogue: 0,0:21:43.24,0:21:46.55,Default,,0,0,0,,ta đã học được cách bình thường\Nnhư Lan An nói trước khi đi.
Dialogue: 0,0:21:48.27,0:21:49.07,Default,,0,0,0,,Nhưng không ngờ,
Dialogue: 0,0:21:49.64,0:21:51.75,Default,,0,0,0,,chúng chỉ đang kiêng dè Tiêu Lẫm thôi.
Dialogue: 0,0:22:03.88,0:22:04.59,Default,,0,0,0,,Lục điện hạ.
Dialogue: 0,0:22:05.24,0:22:06.83,Default,,0,0,0,,Chúc mừng lục điện hạ\Nhọc thành tài quay về,
Dialogue: 0,0:22:06.83,0:22:07.75,Default,,0,0,0,,dời đến phủ đệ mới,
Dialogue: 0,0:22:07.92,0:22:08.92,Default,,0,0,0,,quả là song hỷ lâm môn.
Dialogue: 0,0:22:09.16,0:22:09.88,Default,,0,0,0,,Chúc mừng…
Dialogue: 0,0:22:09.88,0:22:10.31,Default,,0,0,0,,Chúc mừng.
Dialogue: 0,0:22:10.31,0:22:11.31,Default,,0,0,0,,Đàm Đài điện hạ.
Dialogue: 0,0:22:13.20,0:22:14.20,Default,,0,0,0,,Đã ba năm không gặp.
Dialogue: 0,0:22:14.88,0:22:16.03,Default,,0,0,0,,Cảm ơn điện hạ vì hôm nay đã tới.
Dialogue: 0,0:22:16.16,0:22:17.11,Default,,0,0,0,,Chúc mừng điện hạ.
Dialogue: 0,0:22:17.48,0:22:19.48,Default,,0,0,0,,Mau xem này,\Nđại tiểu thư Diệp Phủ tới rồi.
Dialogue: 0,0:22:31.00,0:22:32.11,Default,,0,0,0,,Cô nương này là?
Dialogue: 0,0:22:33.24,0:22:34.83,Default,,0,0,0,,Là thiên kim của tướng quân Trụ Quốc.
Dialogue: 0,0:22:38.48,0:22:39.16,Default,,0,0,0,,Diệp cô nương.
Dialogue: 0,0:22:42.00,0:22:42.59,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:22:44.16,0:22:45.00,Default,,0,0,0,,Trời đã lạnh dần,
Dialogue: 0,0:22:45.51,0:22:46.55,Default,,0,0,0,,cẩn thận kẻo bị cảm.
Dialogue: 0,0:23:03.11,0:23:03.92,Default,,0,0,0,,Đa tạ điện hạ.
Dialogue: 0,0:23:07.83,0:23:08.31,Default,,0,0,0,,Con…
Dialogue: 0,0:23:09.72,0:23:11.51,Default,,0,0,0,,Đàm Đài điện hạ có chuyện gì vậy?
Dialogue: 0,0:23:15.96,0:23:16.68,Default,,0,0,0,,Diệp cô nương,
Dialogue: 0,0:23:17.44,0:23:19.72,Default,,0,0,0,,trời đã lạnh dần, cẩn thận kẻo bị cảm.
Dialogue: 0,0:23:21.31,0:23:22.92,Default,,0,0,0,,Điện hạ, ta không lạnh.
Dialogue: 0,0:23:23.44,0:23:25.64,Default,,0,0,0,,Xin điện hạ cứ giữ áo choàng lại đi.
Dialogue: 0,0:23:31.16,0:23:34.11,Default,,0,0,0,,[Chẳng lẽ Đàm Đài Tẫn bắt chước Tiêu Lẫm]
Dialogue: 0,0:23:34.11,0:23:35.68,Default,,0,0,0,,[nên mới thích Diệp Băng Thường?]
Dialogue: 0,0:23:38.59,0:23:39.24,Default,,0,0,0,,Oánh Tâm.
Dialogue: 0,0:23:39.72,0:23:41.27,Default,,0,0,0,,Tại áo choàng của ta cũ quá sao?
Dialogue: 0,0:23:44.51,0:23:46.07,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:23:46.83,0:23:49.51,Default,,0,0,0,,Ngươi định làm ai buồn nôn ở đây vậy?
Dialogue: 0,0:23:52.79,0:23:53.48,Default,,0,0,0,,Ngũ điện hạ.
Dialogue: 0,0:23:53.64,0:23:55.64,Default,,0,0,0,,Đường đi của cung điện này\Nlắm người qua kẻ lại,
Dialogue: 0,0:23:56.00,0:23:57.68,Default,,0,0,0,,nếu điện hạ muốn đánh ta ở đây,
Dialogue: 0,0:23:58.11,0:23:58.44,Default,,0,0,0,,thì e…
Dialogue: 0,0:23:58.44,0:23:59.55,Default,,0,0,0,,Chắc ngươi vẫn chưa biết nhỉ?
Dialogue: 0,0:23:59.83,0:24:02.79,Default,,0,0,0,,Nay hai nước Thịnh, Cảnh đang giao chiến.
Dialogue: 0,0:24:03.07,0:24:05.16,Default,,0,0,0,,Ta đánh con chó nước Cảnh nhà ngươi,
Dialogue: 0,0:24:05.35,0:24:06.48,Default,,0,0,0,,ai có thể quản được ta?
Dialogue: 0,0:24:07.75,0:24:08.44,Default,,0,0,0,,Đánh hắn đi.
Dialogue: 0,0:24:10.72,0:24:11.35,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:24:11.55,0:24:12.40,Default,,0,0,0,,Chết đi.
Dialogue: 0,0:24:12.55,0:24:13.20,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:24:15.59,0:24:16.27,Default,,0,0,0,,Đừng đánh nữa.
Dialogue: 0,0:24:16.68,0:24:18.59,Default,,0,0,0,,[Cái cảnh cứ đôi ba ngày\Nlại bị đánh đập lăng nhục thế này,]
Dialogue: 0,0:24:19.88,0:24:21.24,Default,,0,0,0,,[rốt cuộc đến bao giờ mới kết thúc?]
Dialogue: 0,0:24:24.35,0:24:25.00,Default,,0,0,0,,Oánh Tâm.
Dialogue: 0,0:24:26.72,0:24:28.68,Default,,0,0,0,,Được người ta thích là cảm giác thế nào?
Dialogue: 0,0:24:33.24,0:24:34.11,Default,,0,0,0,,Ngươi không đáp,
Dialogue: 0,0:24:34.64,0:24:37.03,Default,,0,0,0,,vì ngươi cũng không thích ta, đúng không?
Dialogue: 0,0:24:37.31,0:24:38.20,Default,,0,0,0,,Điện hạ thứ tội.
Dialogue: 0,0:24:38.64,0:24:39.72,Default,,0,0,0,,Nô tỳ tuyệt đối không có ý này.
Dialogue: 0,0:24:43.88,0:24:44.83,Default,,0,0,0,,Khi còn nhỏ,
Dialogue: 0,0:24:45.48,0:24:47.44,Default,,0,0,0,,ta không hiểu biểu cảm trên mặt người khác
Dialogue: 0,0:24:47.72,0:24:49.20,Default,,0,0,0,,tượng trưng cho cảm xúc gì.
Dialogue: 0,0:24:50.27,0:24:51.20,Default,,0,0,0,,Nhưng bây giờ,
Dialogue: 0,0:24:53.31,0:24:55.00,Default,,0,0,0,,rốt cuộc ta cũng có thể hiểu đôi chút rồi.
Dialogue: 0,0:24:56.92,0:24:59.11,Default,,0,0,0,,Thật ra ngươi luôn rất ghét ta.
Dialogue: 0,0:25:01.48,0:25:02.40,Default,,0,0,0,,Tại vì ta,
Dialogue: 0,0:25:03.31,0:25:04.51,Default,,0,0,0,,nên ngươi mới bị giam cầm
Dialogue: 0,0:25:04.51,0:25:06.20,Default,,0,0,0,,trong chốn thâm cung mịt mù tăm tối này.
Dialogue: 0,0:25:11.88,0:25:12.59,Default,,0,0,0,,Oánh Tâm,
Dialogue: 0,0:25:13.03,0:25:13.83,Default,,0,0,0,,ta không trách ngươi.
Dialogue: 0,0:25:14.44,0:25:15.72,Default,,0,0,0,,Ta cũng ghét chính bản thân ta.
Dialogue: 0,0:25:16.27,0:25:18.07,Default,,0,0,0,,Ta biết người đời đều không thích ta.
Dialogue: 0,0:25:18.40,0:25:19.72,Default,,0,0,0,,Theo lẽ thường,
Dialogue: 0,0:25:21.44,0:25:24.88,Default,,0,0,0,,lòng ta nên cảm thấy buồn khổ mới đúng.
Dialogue: 0,0:25:27.24,0:25:28.44,Default,,0,0,0,,Nếu là Tiêu Lẫm,
Dialogue: 0,0:25:28.79,0:25:31.03,Default,,0,0,0,,nhất định sẽ tự trách bản thân\Ntới mức không nuốt nổi cơm.
Dialogue: 0,0:25:33.11,0:25:36.48,Default,,0,0,0,,Về sau ta bắt đầu bắt chước Tiêu Lẫm,
Dialogue: 0,0:25:38.83,0:25:40.20,Default,,0,0,0,,bắt chước mọi thứ của y,
Dialogue: 0,0:25:41.96,0:25:43.16,Default,,0,0,0,,mong rằng dần dần,
Dialogue: 0,0:25:44.51,0:25:45.68,Default,,0,0,0,,ta có thể trở thành y,
Dialogue: 0,0:25:46.27,0:25:47.64,Default,,0,0,0,,trở thành một người được yêu mến
Dialogue: 0,0:25:47.64,0:25:49.00,Default,,0,0,0,,giống Tiêu Lẫm.
Dialogue: 0,0:25:49.51,0:25:50.51,Default,,0,0,0,,Nhưng Oánh Tâm,
Dialogue: 0,0:25:51.20,0:25:52.75,Default,,0,0,0,,ta vẫn chẳng cảm thấy được gì.
Dialogue: 0,0:25:53.51,0:25:55.20,Default,,0,0,0,,Nụ cười ta học của Tiêu Lẫm là giả.
Dialogue: 0,0:25:56.48,0:25:58.59,Default,,0,0,0,,Cách đối xử khoan dung với người khác\Nmà ta học từ Tiêu Lẫm cũng là giả.
Dialogue: 0,0:25:59.59,0:26:00.55,Default,,0,0,0,,Thậm chí,
Dialogue: 0,0:26:01.51,0:26:03.59,Default,,0,0,0,,đến việc quan tâm tới người khác\Ncũng là giả.
Dialogue: 0,0:26:04.96,0:26:05.88,Default,,0,0,0,,Đồ giả
Dialogue: 0,0:26:07.68,0:26:09.27,Default,,0,0,0,,thì đáng bị người ta ruồng rẫy,
Dialogue: 0,0:26:12.24,0:26:13.27,Default,,0,0,0,,bị người ta ghét bỏ,
Dialogue: 0,0:26:14.83,0:26:15.92,Default,,0,0,0,,bị người ta phỉ nhổ.
Dialogue: 0,0:26:20.72,0:26:21.48,Default,,0,0,0,,[Bỏ đi.]
Dialogue: 0,0:26:22.59,0:26:23.55,Default,,0,0,0,,[Kẻ như ta,]
Dialogue: 0,0:26:23.75,0:26:24.75,Default,,0,0,0,,[sống được đã là chẳng dễ dàng.]
Dialogue: 0,0:26:24.75,0:26:25.40,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:26:26.27,0:26:28.07,Default,,0,0,0,,- [Hà tất mong mỏi yêu mến gì nữa.]\N- Điện hạ.
Dialogue: 0,0:26:30.31,0:26:31.59,Default,,0,0,0,,[Thân mang tà cốt,]
Dialogue: 0,0:26:33.00,0:26:34.11,Default,,0,0,0,,[vô tình vô cảm,]
Dialogue: 0,0:26:35.27,0:26:36.68,Default,,0,0,0,,[quả thật cũng không phải do hắn muốn,]
Dialogue: 0,0:26:37.64,0:26:39.00,Default,,0,0,0,,[không phải là lỗi của hắn.]
Dialogue: 0,0:26:40.88,0:26:42.51,Default,,0,0,0,,[Nhưng một mai trở thành Ma Thần,]
Dialogue: 0,0:26:43.16,0:26:44.79,Default,,0,0,0,,[những món nợ máu chồng chất\Ntrong tay hắn]
Dialogue: 0,0:26:46.07,0:26:47.92,Default,,0,0,0,,[cũng thật sự do hắn gây ra.]
Dialogue: 0,0:26:53.72,0:26:56.55,Default,,0,0,0,,Phụng mệnh chuyển lời nhắn gửi\Ntừ nước Cảnh tới cho ma ma.
Dialogue: 0,0:26:56.68,0:26:57.44,Default,,0,0,0,,Nước Cảnh?
Dialogue: 0,0:27:03.48,0:27:05.03,Default,,0,0,0,,Không bao lâu nữa\Ncon tin sẽ phải thành thân,
Dialogue: 0,0:27:05.20,0:27:06.27,Default,,0,0,0,,rời vương cung nước Thịnh.
Dialogue: 0,0:27:06.79,0:27:08.00,Default,,0,0,0,,Nhưng hễ rời cung,
Dialogue: 0,0:27:08.00,0:27:09.75,Default,,0,0,0,,là có thể hắn sẽ trở lại nước Cảnh.
Dialogue: 0,0:27:10.07,0:27:11.31,Default,,0,0,0,,Một khi trở lại nước Cảnh,
Dialogue: 0,0:27:11.48,0:27:12.92,Default,,0,0,0,,e hắn sẽ như chết đuối vớ được cọc,
Dialogue: 0,0:27:13.51,0:27:15.03,Default,,0,0,0,,sẽ không thể xử lý nổi hắn nữa.
Dialogue: 0,0:27:16.27,0:27:18.55,Default,,0,0,0,,Vậy nên Minh Lãng điện hạ nói,
Dialogue: 0,0:27:19.03,0:27:22.79,Default,,0,0,0,,tốt nhất phải khiến con tin mãi mãi\Nkhông thể bước chân ra khỏi cổng cung.
Dialogue: 0,0:27:23.55,0:27:24.79,Default,,0,0,0,,[Đàm Đài Minh Lãng?]
Dialogue: 0,0:27:25.59,0:27:26.96,Default,,0,0,0,,[Đó là đại ca của Tiểu Ma Thần.]
Dialogue: 0,0:27:27.27,0:27:29.48,Default,,0,0,0,,Đàm Đài Minh Lãng muốn ta giết ngài ấy?
Dialogue: 0,0:27:35.68,0:27:36.79,Default,,0,0,0,,Vậy ta được lợi gì?
Dialogue: 0,0:27:37.79,0:27:40.72,Default,,0,0,0,,Nước chảy về nguồn, lá rụng về cội.
Dialogue: 0,0:27:41.48,0:27:44.27,Default,,0,0,0,,Minh Lãng điện hạ thương tình\Nma ma cũng đã lớn tuổi rồi.
Dialogue: 0,0:27:44.27,0:27:46.31,Default,,0,0,0,,Chỉ cần ma ma\Nchịu lo việc này giúp bọn ta,
Dialogue: 0,0:27:46.31,0:27:47.92,Default,,0,0,0,,bọn ta sẽ nghĩ cách
Dialogue: 0,0:27:48.31,0:27:50.44,Default,,0,0,0,,giúp ma ma rời vương cung nước Thịnh,
Dialogue: 0,0:27:50.75,0:27:51.96,Default,,0,0,0,,trở lại quê hương.
Dialogue: 0,0:27:53.31,0:27:54.03,Default,,0,0,0,,Thật chứ?
Dialogue: 0,0:27:54.79,0:27:56.59,Default,,0,0,0,,Ma ma đã vứt bỏ tuổi thanh xuân,
Dialogue: 0,0:27:56.59,0:27:58.31,Default,,0,0,0,,nát tan hơn nửa đời người
Dialogue: 0,0:27:58.51,0:27:59.92,Default,,0,0,0,,vì Đàm Đài Tẫn.
Dialogue: 0,0:28:00.20,0:28:02.92,Default,,0,0,0,,Chẳng lẽ ma ma thật sự cam lòng\Nđi theo con quái vật này
Dialogue: 0,0:28:02.92,0:28:05.07,Default,,0,0,0,,tới tận khi chết nơi đất khách sao?
Dialogue: 0,0:28:05.92,0:28:06.55,Default,,0,0,0,,Oánh Tâm,
Dialogue: 0,0:28:06.79,0:28:07.79,Default,,0,0,0,,đừng để họ dụ dỗ.
Dialogue: 0,0:28:08.20,0:28:10.03,Default,,0,0,0,,Cô đã trông nom hắn từ khi hắn còn nhỏ.
Dialogue: 0,0:28:10.03,0:28:10.79,Default,,0,0,0,,Dù hắn kỳ quái,
Dialogue: 0,0:28:10.79,0:28:12.11,Default,,0,0,0,,nhưng chưa từng làm hại cô.
Dialogue: 0,0:28:12.31,0:28:13.51,Default,,0,0,0,,Cô thật sự nhẫn tâm làm vậy ư?
Dialogue: 0,0:28:15.11,0:28:16.79,Default,,0,0,0,,Ở nước Thịnh,\Nhắn không có bạn bè người thân.
Dialogue: 0,0:28:16.79,0:28:18.27,Default,,0,0,0,,Cô là người duy nhất hắn chịu tin tưởng.
Dialogue: 0,0:28:18.27,0:28:19.27,Default,,0,0,0,,Cô không thể phản bội hắn.
Dialogue: 0,0:28:20.20,0:28:20.79,Default,,0,0,0,,Oánh Tâm!
Dialogue: 0,0:28:21.31,0:28:22.00,Default,,0,0,0,,Oánh Tâm!
Dialogue: 0,0:28:23.48,0:28:25.55,Default,,0,0,0,,Được, ta đồng ý với các người.
Dialogue: 0,0:28:27.48,0:28:29.79,Default,,0,0,0,,Vậy tiểu nhân xin cáo lui trước.
Dialogue: 0,0:28:31.11,0:28:32.44,Default,,0,0,0,,Đến cô cũng phản bội hắn.
Dialogue: 0,0:28:37.31,0:28:39.27,Default,,0,0,0,,[Nếu từ nhỏ tới lớn,]
Dialogue: 0,0:28:39.79,0:28:41.88,Default,,0,0,0,,[Đàm Đài Tẫn có dù chỉ một người\Nthật lòng yêu thương che chở hắn,]
Dialogue: 0,0:28:42.00,0:28:43.03,Default,,0,0,0,,[giúp hắn dừng lại trước khi quá muộn,]
Dialogue: 0,0:28:43.75,0:28:44.51,Default,,0,0,0,,[thì có lẽ]
Dialogue: 0,0:28:45.64,0:28:47.48,Default,,0,0,0,,[hắn đã không tới mức\Ntuyệt vọng mà trở thành ma.]
Dialogue: 0,0:28:54.03,0:28:54.96,Default,,0,0,0,,Cuối cùng cũng kết thúc.
Dialogue: 0,0:29:14.31,0:29:15.68,Default,,0,0,0,,Rốt cuộc cũng tìm ra rồi.
Dialogue: 0,0:29:28.27,0:29:29.96,Default,,0,0,0,,Sào huyệt của yêu ma\Ncó kết giới che chắn.
Dialogue: 0,0:29:30.48,0:29:31.75,Default,,0,0,0,,Chắc hẳn Băng Thường ở trong này.
Dialogue: 0,0:29:32.55,0:29:34.64,Default,,0,0,0,,Có khi Đàm Đài Tẫn và Diệp nhị tiểu thư
Dialogue: 0,0:29:34.64,0:29:35.92,Default,,0,0,0,,cũng đã bị yêu nghiệt này giam cầm.
Dialogue: 0,0:29:36.44,0:29:37.59,Default,,0,0,0,,Phải mau chóng cứu họ ra.
Dialogue: 0,0:29:38.24,0:29:40.16,Default,,0,0,0,,Kiểm tra ranh giới nơi này cẩn thận.
Dialogue: 0,0:29:40.59,0:29:41.68,Default,,0,0,0,,Phái người canh gác lối đi.
Dialogue: 0,0:29:42.24,0:29:42.75,Default,,0,0,0,,Vâng.
Dialogue: 0,0:29:43.07,0:29:43.64,Default,,0,0,0,,Đi.
Dialogue: 0,0:29:43.96,0:29:44.48,Default,,0,0,0,,Mau lên.
Dialogue: 0,0:29:50.31,0:29:52.24,Default,,0,0,0,,Giờ buộc phải nghĩ cách dụ yêu nghiệt ra.
Dialogue: 0,0:29:53.79,0:29:54.31,Default,,0,0,0,,Để ta.
Dialogue: 0,0:30:04.44,0:30:05.11,Default,,0,0,0,,Yêu nghiệt,
Dialogue: 0,0:30:05.75,0:30:07.31,Default,,0,0,0,,chúng ta đã tìm ra hang ổ của ngươi rồi.
Dialogue: 0,0:30:07.31,0:30:08.16,Default,,0,0,0,,Đừng trốn nữa.
Dialogue: 0,0:30:08.55,0:30:10.48,Default,,0,0,0,,Cẩn thận ta đốt luôn\Ncả khu rừng của ngươi.
Dialogue: 0,0:30:11.79,0:30:13.44,Default,,0,0,0,,Lại thêm một kẻ đến tận nơi nộp mạng.
Dialogue: 0,0:30:28.51,0:30:30.31,Default,,0,0,0,,[Không biết về sau\Ntại sao Oánh Tâm lại phát điên?]
Dialogue: 0,0:30:33.64,0:30:34.31,Default,,0,0,0,,[Đàm Đài Tẫn.]
Dialogue: 0,0:30:39.00,0:30:39.68,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:30:56.16,0:30:57.75,Default,,0,0,0,,Đàm Đài Tẫn…
Dialogue: 0,0:30:58.79,0:30:59.96,Default,,0,0,0,,Đàm Đài Tẫn, ngươi mau tỉnh lại đi.
Dialogue: 0,0:30:59.96,0:31:00.68,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:31:03.55,0:31:04.83,Default,,0,0,0,,Không phải ngươi không thể nằm mơ sao?
Dialogue: 0,0:31:06.31,0:31:07.75,Default,,0,0,0,,Nhưng ngươi đã nở ra Yểm Chi Hoa rồi.
Dialogue: 0,0:31:08.48,0:31:10.31,Default,,0,0,0,,Đàm Đài Tẫn…
Dialogue: 0,0:31:10.79,0:31:12.00,Default,,0,0,0,,Đàm Đài Tẫn, ngươi tỉnh lại đi.
Dialogue: 0,0:31:12.59,0:31:13.31,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:31:15.68,0:31:16.40,Default,,0,0,0,,[Đàm Đài Tẫn.]
Dialogue: 0,0:31:16.96,0:31:17.68,Default,,0,0,0,,[Đàm Đài Tẫn.]
Dialogue: 0,0:31:18.27,0:31:19.59,Default,,0,0,0,,[Đàm Đài Tẫn, ngươi mau tỉnh lại đi.]
Dialogue: 0,0:31:30.07,0:31:31.07,Default,,0,0,0,,Nghe nói
Dialogue: 0,0:31:31.07,0:31:33.40,Default,,0,0,0,,trong số các đệ tử ngoại môn\Ncủa Tiêu Dao Tông,
Dialogue: 0,0:31:33.59,0:31:34.64,Default,,0,0,0,,Tẫn Nhi có đạo hạnh xuất chúng,
Dialogue: 0,0:31:35.31,0:31:37.51,Default,,0,0,0,,tài năng hơn người phải không?
Dialogue: 0,0:31:40.68,0:31:42.11,Default,,0,0,0,,Đó chỉ là học cho vui thôi.
Dialogue: 0,0:31:42.11,0:31:42.68,Default,,0,0,0,,Sao?
Dialogue: 0,0:31:42.68,0:31:44.51,Default,,0,0,0,,Chàng muốn để Tẫn Nhi đi tu tiên thật sao?
Dialogue: 0,0:31:52.44,0:31:53.51,Default,,0,0,0,,Để mẹ xem nào.
Dialogue: 0,0:31:54.75,0:31:56.11,Default,,0,0,0,,Trong thời gian xuất cung,
Dialogue: 0,0:31:57.11,0:31:58.59,Default,,0,0,0,,con quả thật đã gầy đi nhiều rồi.
Dialogue: 0,0:32:04.79,0:32:05.48,Default,,0,0,0,,Mẫu thân.
Dialogue: 0,0:32:07.31,0:32:07.75,Default,,0,0,0,,Nào.
Dialogue: 0,0:32:07.75,0:32:09.75,Default,,0,0,0,,Ta có chuyện muốn báo cho con biết.
Dialogue: 0,0:32:10.11,0:32:11.40,Default,,0,0,0,,Trong thời gian con tu hành,
Dialogue: 0,0:32:11.59,0:32:14.27,Default,,0,0,0,,phụ thân đã quyết định hôn sự cho con.
Dialogue: 0,0:32:15.11,0:32:15.88,Default,,0,0,0,,Tạ ơn phụ vương.
Dialogue: 0,0:32:16.55,0:32:19.55,Default,,0,0,0,,Tân nương là con gái\Ncủa đại tướng quân Diệp Khiếu nước Thịnh.
Dialogue: 0,0:32:19.83,0:32:22.11,Default,,0,0,0,,Hai nước Thịnh, Cảnh thường có tranh chấp.
Dialogue: 0,0:32:22.88,0:32:24.40,Default,,0,0,0,,Lần này kết mối liên hôn,
Dialogue: 0,0:32:24.68,0:32:27.35,Default,,0,0,0,,về sau hai nước\Ncũng có thể bớt nạn binh đao.
Dialogue: 0,0:32:30.27,0:32:32.51,Default,,0,0,0,,Con xin nghe theo\Nsắp xếp của phụ vương và mẫu phi.
Dialogue: 0,0:32:34.27,0:32:34.88,Default,,0,0,0,,Tẫn Nhi.
Dialogue: 0,0:32:35.27,0:32:37.03,Default,,0,0,0,,Lần này tới Tiêu Dao Tông tu hành,
Dialogue: 0,0:32:37.51,0:32:39.79,Default,,0,0,0,,con có kết giao được với\Nthanh niên xuất chúng nào không?
Dialogue: 0,0:32:41.00,0:32:42.51,Default,,0,0,0,,Tiêu Lẫm, lục vương tử nước Thịnh
Dialogue: 0,0:32:43.16,0:32:44.20,Default,,0,0,0,,có giao hảo với con.
Dialogue: 0,0:32:46.59,0:32:47.27,Default,,0,0,0,,[Trùng hợp quá.]
Dialogue: 0,0:32:47.48,0:32:51.11,Default,,0,0,0,,[Lần này Tiêu Lẫm\Nlà người đưa dâu tới nước Cảnh ta.]
Dialogue: 0,0:32:51.20,0:32:53.16,Default,,0,0,0,,[Con có thể thân thiết hơn với Tiêu Lẫm.]
Dialogue: 0,0:32:53.59,0:32:54.11,Default,,0,0,0,,[Vâng.]
Dialogue: 0,0:32:54.48,0:32:55.75,Default,,0,0,0,,Chúc mừng điện hạ.
Dialogue: 0,0:32:59.88,0:33:00.72,Default,,0,0,0,,[Vốn dĩ mẹ không muốn]
Dialogue: 0,0:33:00.72,0:33:01.83,Default,,0,0,0,,[vội vã quyết định\Nmối hôn sự này cho con.]
Dialogue: 0,0:33:01.83,0:33:03.11,Default,,0,0,0,,Chúc mừng điện hạ.
Dialogue: 0,0:33:03.79,0:33:06.40,Default,,0,0,0,,[Nhưng giờ con đã được lập làm thái tử,]
Dialogue: 0,0:33:06.96,0:33:08.64,Default,,0,0,0,,[hôn sự liên quan tới nền móng nước nhà.]
Dialogue: 0,0:33:08.64,0:33:09.88,Default,,0,0,0,,Chúc mừng điện hạ.
Dialogue: 0,0:33:15.31,0:33:17.88,Default,,0,0,0,,[Đại tiểu thư Diệp gia\Nhiểu biết, lễ nghĩa,]
Dialogue: 0,0:33:18.20,0:33:19.51,Default,,0,0,0,,[còn là một đại mỹ nhân.]
Dialogue: 0,0:33:20.88,0:33:23.79,Default,,0,0,0,,[Mẹ nghĩ Tẫn Nhi sẽ thích con bé.]
Dialogue: 0,0:33:39.31,0:33:40.20,Default,,0,0,0,,Diệp Tịch Vụ.
Dialogue: 0,0:33:41.55,0:33:42.48,Default,,0,0,0,,Sao lại là cô?
Dialogue: 0,0:33:48.64,0:33:49.44,Default,,0,0,0,,Không thì sao?
Dialogue: 0,0:33:50.83,0:33:52.00,Default,,0,0,0,,Ngươi nghĩ là ai?
Dialogue: 0,0:34:15.40,0:34:16.03,Default,,0,0,0,,Mẫu thân.
Dialogue: 0,0:34:38.80,0:34:39.48,Default,,0,0,0,,Mẫu thân.
Dialogue: 0,0:34:49.67,0:34:50.44,Default,,0,0,0,,Phụ thân.
Dialogue: 0,0:34:50.67,0:34:52.40,Default,,0,0,0,,Ngươi là tên nghiệt súc giết mẹ!
Dialogue: 0,0:34:53.23,0:34:53.88,Default,,0,0,0,,Không phải.
Dialogue: 0,0:34:54.76,0:34:55.36,Default,,0,0,0,,Phụ thân.
Dialogue: 0,0:34:55.88,0:34:57.11,Default,,0,0,0,,Con không hại chết mẫu thân.
Dialogue: 0,0:35:08.67,0:35:09.32,Default,,0,0,0,,Lan An.
Dialogue: 0,0:35:10.11,0:35:10.67,Default,,0,0,0,,Đừng đi mà.
Dialogue: 0,0:35:12.03,0:35:13.48,Default,,0,0,0,,[Ngươi là đồ quái vật.]
Dialogue: 0,0:35:21.00,0:35:21.63,Default,,0,0,0,,Đừng đi.
Dialogue: 0,0:35:22.32,0:35:24.00,Default,,0,0,0,,Cảm giác cha hiền con hiếu,
Dialogue: 0,0:35:25.00,0:35:26.19,Default,,0,0,0,,được mọi người yêu mến kính trọng
Dialogue: 0,0:35:26.36,0:35:28.19,Default,,0,0,0,,trong giấc mộng kê vàng vừa rồi thế nào?
Dialogue: 0,0:35:29.32,0:35:29.96,Default,,0,0,0,,Tiêu Lẫm.
Dialogue: 0,0:35:31.11,0:35:32.11,Default,,0,0,0,,Cứu ta với.
Dialogue: 0,0:35:32.67,0:35:34.00,Default,,0,0,0,,Nhưng đó đều là giả.
Dialogue: 0,0:35:35.76,0:35:37.11,Default,,0,0,0,,Rời khỏi giấc mộng hư ảo,
Dialogue: 0,0:35:37.67,0:35:38.88,Default,,0,0,0,,sẽ không còn ai quan tâm tới ngươi,
Dialogue: 0,0:35:39.59,0:35:40.80,Default,,0,0,0,,càng không ai yêu thương ngươi.
Dialogue: 0,0:35:49.44,0:35:50.44,Default,,0,0,0,,Trước nay
Dialogue: 0,0:35:51.59,0:35:52.92,Default,,0,0,0,,ngươi luôn bắt chước ta,
Dialogue: 0,0:35:53.36,0:35:54.80,Default,,0,0,0,,hy vọng được mọi người thừa nhận
Dialogue: 0,0:35:55.48,0:35:56.67,Default,,0,0,0,,giống như ta.
Dialogue: 0,0:35:57.23,0:35:58.44,Default,,0,0,0,,Nhưng trong giấc mơ vừa rồi,
Dialogue: 0,0:35:58.76,0:36:00.55,Default,,0,0,0,,ngươi đã có được mọi thứ mình muốn.
Dialogue: 0,0:36:02.00,0:36:03.51,Default,,0,0,0,,Tình yêu của cha mẹ,
Dialogue: 0,0:36:04.23,0:36:06.00,Default,,0,0,0,,vương vị nằm trong tầm tay.
Dialogue: 0,0:36:06.71,0:36:08.80,Default,,0,0,0,,Quả là một cuộc đời\Nkhiến ta cũng phải ngưỡng mộ.
Dialogue: 0,0:36:10.67,0:36:12.80,Default,,0,0,0,,Nhưng ngươi thật sự\Ncó thể cảm nhận được niềm vui sao?
Dialogue: 0,0:36:20.55,0:36:21.51,Default,,0,0,0,,Không cảm nhận được.
Dialogue: 0,0:36:21.80,0:36:22.92,Default,,0,0,0,,Không có gì hết.
Dialogue: 0,0:36:23.40,0:36:24.40,Default,,0,0,0,,Nếu không có ngươi,
Dialogue: 0,0:36:25.80,0:36:27.23,Default,,0,0,0,,mẫu thân ngươi sẽ không chết,
Dialogue: 0,0:36:28.84,0:36:30.88,Default,,0,0,0,,phụ thân ngươi\Ncũng không đau đớn mất đi người mình yêu,
Dialogue: 0,0:36:32.23,0:36:35.03,Default,,0,0,0,,Lan An không phải phí hoài cuộc đời\Ntrong thâm cung,
Dialogue: 0,0:36:35.71,0:36:37.76,Default,,0,0,0,,Oánh Tâm cũng không phải chịu hết sỉ nhục.
Dialogue: 0,0:36:38.88,0:36:40.67,Default,,0,0,0,,Họ đều là những người\Nthân cận nhất của ngươi.
Dialogue: 0,0:36:42.11,0:36:43.76,Default,,0,0,0,,Nhưng họ đều hận ngươi.
Dialogue: 0,0:36:50.76,0:36:53.00,Default,,0,0,0,,Ta chưa từng muốn hại họ.
Dialogue: 0,0:36:55.44,0:36:56.03,Default,,0,0,0,,Chưa từng.
Dialogue: 0,0:36:58.15,0:36:58.84,Default,,0,0,0,,Ngươi xem.
Dialogue: 0,0:36:59.59,0:37:02.07,Default,,0,0,0,,Hỉ nộ ái ố, thất tình lục dục,
Dialogue: 0,0:37:02.36,0:37:03.63,Default,,0,0,0,,đều như không tồn tại với ngươi.
Dialogue: 0,0:37:04.23,0:37:05.88,Default,,0,0,0,,Ngươi chỉ biết bo bo giữ mình
Dialogue: 0,0:37:06.76,0:37:07.92,Default,,0,0,0,,mà hoàn toàn không hiểu,
Dialogue: 0,0:37:08.32,0:37:10.36,Default,,0,0,0,,thậm chí không quan tâm\Nđến nỗi đau khổ của người khác.
Dialogue: 0,0:37:11.96,0:37:12.59,Default,,0,0,0,,Ta hiểu.
Dialogue: 0,0:37:15.00,0:37:15.88,Default,,0,0,0,,Ta hiểu cả mà.
Dialogue: 0,0:37:17.59,0:37:19.11,Default,,0,0,0,,Ta chỉ không cảm nhận được thôi.
Dialogue: 0,0:37:19.59,0:37:20.40,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:37:21.19,0:37:22.92,Default,,0,0,0,,Ngươi quả là khiến người ta xót xa.
Dialogue: 0,0:37:23.11,0:37:24.00,Default,,0,0,0,,Ngươi sống
Dialogue: 0,0:37:24.51,0:37:26.67,Default,,0,0,0,,mà không mảy may cảm nhận được\Nsự tốt đẹp của thế gian này.
Dialogue: 0,0:37:27.48,0:37:28.92,Default,,0,0,0,,Thậm chí không cảm nhận được
Dialogue: 0,0:37:28.92,0:37:29.92,Default,,0,0,0,,nỗi đau khổ của cõi đời.
Dialogue: 0,0:37:30.44,0:37:32.19,Default,,0,0,0,,Sự tồn tại của ngươi\Nchỉ có một ý nghĩa duy nhất
Dialogue: 0,0:37:32.19,0:37:33.88,Default,,0,0,0,,đó là đem lại tai họa cho kẻ khác.
Dialogue: 0,0:37:33.88,0:37:34.44,Default,,0,0,0,,Không phải.
Dialogue: 0,0:37:35.32,0:37:38.00,Default,,0,0,0,,Khiến người ta ruồng rẫy, căm ghét.
Dialogue: 0,0:37:39.40,0:37:40.23,Default,,0,0,0,,Rốt cuộc ngươi sống
Dialogue: 0,0:37:40.63,0:37:41.96,Default,,0,0,0,,vì lẽ gì?
Dialogue: 0,0:37:45.00,0:37:47.36,Default,,0,0,0,,Không phải đâu, không phải như vậy.
Dialogue: 0,0:37:47.76,0:37:48.59,Default,,0,0,0,,Nhưng ít nhất,
Dialogue: 0,0:37:49.63,0:37:51.51,Default,,0,0,0,,mẫu thân ngươi chưa từng hận ngươi.
Dialogue: 0,0:37:52.80,0:37:54.32,Default,,0,0,0,,Đến chết bà ấy vẫn yêu ngươi.
Dialogue: 0,0:37:54.92,0:37:56.23,Default,,0,0,0,,Nếu ngươi có thể gặp bà ấy,
Dialogue: 0,0:37:57.23,0:37:58.84,Default,,0,0,0,,nghe chính miệng bà ấy nói với ngươi
Dialogue: 0,0:37:59.36,0:38:00.23,Default,,0,0,0,,rằng bà ấy rất yêu ngươi,
Dialogue: 0,0:38:00.76,0:38:03.07,Default,,0,0,0,,ngươi có thể thoát khỏi vận mệnh này.
Dialogue: 0,0:38:09.11,0:38:10.32,Default,,0,0,0,,Ngươi muốn gặp bà ấy không?
Dialogue: 0,0:38:20.63,0:38:22.07,Default,,0,0,0,,Cơ hội đang ở ngay trước mắt.
Dialogue: 0,0:38:23.32,0:38:24.48,Default,,0,0,0,,Ngươi còn đợi gì nữa?
Dialogue: 0,0:38:37.36,0:38:39.71,Default,,0,0,0,,[Ngươi muốn nếm hết\Nđau khổ trên thế gian,]
Dialogue: 0,0:38:39.92,0:38:42.15,Default,,0,0,0,,[hấp thu nỗi oán hận vô tận.]
Dialogue: 0,0:38:44.51,0:38:46.55,Default,,0,0,0,,[Ngươi gánh trên lưng\Nlời nguyền rủa số phận định sẵn,]
Dialogue: 0,0:38:46.55,0:38:48.36,Default,,0,0,0,,[định trước là không thể chết tử tế.]
Dialogue: 0,0:38:48.71,0:38:50.76,Default,,0,0,0,,[Khi nỗi đau đớn của ngươi\Nlên đến đỉnh điểm,]
Dialogue: 0,0:38:50.76,0:38:52.59,Default,,0,0,0,,[sinh mệnh đi đến hồi kết,]
Dialogue: 0,0:38:53.19,0:38:55.96,Default,,0,0,0,,[ta sẽ tới nhận sự hiến tế của ngươi.]
Dialogue: 0,0:39:03.32,0:39:04.63,Default,,0,0,0,,Ta không muốn chờ nữa.
Dialogue: 0,0:39:13.40,0:39:14.51,Default,,0,0,0,,Không muốn chờ nữa.
Dialogue: 0,0:39:28.00,0:39:28.71,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:39:29.48,0:39:30.48,Default,,0,0,0,,Ngươi không thể chết.
Dialogue: 0,0:41:15.11,0:41:16.40,Default,,0,0,0,,[Sao yêu lực của ta lại trở nên yếu đi?]
Dialogue: 0,0:41:24.92,0:41:26.28,Default,,0,0,0,,Tiêu Lẫm!
Dialogue: 0,0:41:41.55,0:41:42.36,Default,,0,0,0,,Tiểu sư thúc, mau lên.
Dialogue: 0,0:41:45.28,0:41:46.19,Default,,0,0,0,,Mặc kệ, dùng cái này vậy.
Dialogue: 0,0:41:59.80,0:42:00.55,Default,,0,0,0,,Thành công rồi?
Dialogue: 0,0:42:02.36,0:42:03.32,Default,,0,0,0,,Chạy đi đâu mất rồi?
Dialogue: 0,0:42:25.63,0:42:27.00,Default,,0,0,0,,Ngươi đã hủy hoại dây mây của ta.
Dialogue: 0,0:42:32.40,0:42:34.23,Default,,0,0,0,,Đáng nhẽ ta nên nuốt chửng ngươi từ trước,
Dialogue: 0,0:42:34.48,0:42:35.96,Default,,0,0,0,,khiến ngươi hồn bay phách tán.
Dialogue: 0,0:43:59.32,0:44:00.28,Default,,0,0,0,,[Đàm Đài Tẫn,]
Dialogue: 0,0:44:01.48,0:44:03.71,Default,,0,0,0,,[sao không nếm thử mùi vị của yêu quái?]
Dialogue: 0,0:44:03.71,0:44:04.84,Default,,0,0,0,,Ngươi đang nói gì?
Dialogue: 0,0:44:05.32,0:44:08.11,Default,,0,0,0,,[Máu của ngươi\Ncó thể khắc chế yêu ma trên thế gian.]
Dialogue: 0,0:44:08.76,0:44:11.71,Default,,0,0,0,,[Thân thể của ngươi\Ncó thể chịu được yêu lực của chúng.]
Dialogue: 0,0:44:12.44,0:44:14.59,Default,,0,0,0,,[Chỉ cần chúng không giết được ngươi,]
Dialogue: 0,0:44:14.59,0:44:17.92,Default,,0,0,0,,[ngươi có thể sử dụng sức mạnh của chúng.]
Dialogue: 0,0:44:36.40,0:44:37.88,Default,,0,0,0,,[Cảm nhận được rồi phải không?]
Dialogue: 0,0:44:38.84,0:44:41.40,Default,,0,0,0,,[Sức mạnh này\Nchính là khát vọng của ngươi.]
Dialogue: 0,0:44:42.11,0:44:45.63,Default,,0,0,0,,[Chẳng phải là thú vị hơn\Nthất tình lục dục nhiều sao?]
Dialogue: 0,0:44:52.48,0:44:54.11,Default,,0,0,0,,Đừng hòng bỡn cợt ta nữa.
Dialogue: 0,0:44:57.84,0:45:00.15,Default,,0,0,0,,[Vung roi dài cai quản cõi đời.]
Dialogue: 0,0:45:00.23,0:45:02.67,Default,,0,0,0,,[Tay cầm roi trừng phạt thiên hạ.]
Dialogue: 0,0:45:02.80,0:45:05.76,Default,,0,0,0,,[Đây chính là hương vị của sức mạnh.]
Dialogue: 0,0:45:06.48,0:45:07.88,Default,,0,0,0,,[Ta bảo đảm với ngươi,]
Dialogue: 0,0:45:08.67,0:45:09.96,Default,,0,0,0,,[một khi nếm thử,]
Dialogue: 0,0:45:10.67,0:45:14.11,Default,,0,0,0,,[ngươi sẽ không muốn mất đi nó nữa.]
Dialogue: 0,0:47:15.07,0:47:15.71,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:47:16.48,0:47:17.15,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:47:19.40,0:47:21.15,Default,,0,0,0,,Điện hạ, Diệp đại tiểu thư ở phía này.
Dialogue: 0,0:47:29.19,0:47:30.63,Default,,0,0,0,,Băng Thường…
Dialogue: 0,0:47:34.96,0:47:35.63,Default,,0,0,0,,Ả yêu ma đó đâu?
Dialogue: 0,0:47:36.80,0:47:38.44,Default,,0,0,0,,Chẳng lẽ bị\Nbùa chú ban nãy của ta đánh trúng,
Dialogue: 0,0:47:38.59,0:47:39.44,Default,,0,0,0,,nên đã tan thành tro bụi rồi?
Dialogue: 0,0:47:41.36,0:47:42.00,Default,,0,0,0,,Cứu người trước đã.
Dialogue: 0,0:47:42.71,0:47:43.32,Default,,0,0,0,,Băng Thường.
Dialogue: 0,0:47:45.40,0:47:46.00,Default,,0,0,0,,Băng Thường.
Dialogue: 0,0:47:50.76,0:47:51.59,Default,,0,0,0,,Đừng mà.
Dialogue: 0,0:47:53.76,0:47:54.44,Default,,0,0,0,,Đừng mà.
Dialogue: 0,0:48:01.48,0:48:02.19,Default,,0,0,0,,Đàm Đài Tẫn!
Dialogue: 0,0:48:05.36,0:48:06.55,Default,,0,0,0,,[Ta quay lại rồi sao?]
Dialogue: 0,0:48:10.23,0:48:10.88,Default,,0,0,0,,Tiểu thư.
Dialogue: 0,0:48:11.48,0:48:13.23,Default,,0,0,0,,Tiểu thư, cuối cùng người cũng tỉnh rồi.
Dialogue: 0,0:48:13.23,0:48:14.63,Default,,0,0,0,,Em lo chết mất.
Dialogue: 0,0:48:14.63,0:48:16.15,Default,,0,0,0,,Em còn tưởng người sẽ chết đấy.
Dialogue: 0,0:48:16.15,0:48:16.96,Default,,0,0,0,,Đàm Đài Tẫn đâu?
Dialogue: 0,0:48:16.96,0:48:17.76,Default,,0,0,0,,Hắn chết chưa?
Dialogue: 0,0:48:18.11,0:48:19.71,Default,,0,0,0,,Cô gia được đưa sang Đông sương phòng rồi,
Dialogue: 0,0:48:19.71,0:48:20.63,Default,,0,0,0,,ngài ấy vẫn chưa tỉnh,
Dialogue: 0,0:48:20.63,0:48:22.23,Default,,0,0,0,,nhưng chắc là\Ntính mạng không gặp nguy hiểm.
Dialogue: 0,0:48:29.40,0:48:30.11,Default,,0,0,0,,Xuân Đào.
Dialogue: 0,0:48:31.03,0:48:32.32,Default,,0,0,0,,Bọn ta về đây bằng cách nào?
Dialogue: 0,0:48:32.80,0:48:33.76,Default,,0,0,0,,Ta không nhớ nữa rồi.
Dialogue: 0,0:48:33.76,0:48:35.88,Default,,0,0,0,,Lục điện hạ đã đưa mọi người về.
Dialogue: 0,0:48:36.03,0:48:36.80,Default,,0,0,0,,Thái y nói,
Dialogue: 0,0:48:36.80,0:48:38.48,Default,,0,0,0,,mọi người suy nhược quá mức
Dialogue: 0,0:48:38.48,0:48:39.40,Default,,0,0,0,,nên mới hôn mê.
Dialogue: 0,0:48:39.55,0:48:41.63,Default,,0,0,0,,Lão thái thái và lão gia\Ntrông nom người cả đêm,
Dialogue: 0,0:48:41.63,0:48:43.19,Default,,0,0,0,,vừa mới về nghỉ ngơi xong.
Dialogue: 0,0:48:46.11,0:48:47.03,Default,,0,0,0,,Tỷ tỷ ta thì sao?
Dialogue: 0,0:48:47.28,0:48:48.03,Default,,0,0,0,,Tỷ ấy không sao chứ?
Dialogue: 0,0:48:48.19,0:48:49.51,Default,,0,0,0,,Đại tiểu thư bình an vô sự rồi.
Dialogue: 0,0:48:49.51,0:48:50.88,Default,,0,0,0,,Lục điện hạ đang trông chừng đại tiểu thư.
Dialogue: 0,0:49:05.07,0:49:07.00,Default,,0,0,0,,[Xem ra những tổn thương\Ntrong ác mộng là thật.]
Dialogue: 0,0:49:07.48,0:49:08.84,Default,,0,0,0,,[May là cản được nhát dao đó.]
Dialogue: 0,0:49:10.59,0:49:12.07,Default,,0,0,0,,[Đàm Đài Tẫn không thể chết.]
Dialogue: 0,0:49:12.63,0:49:13.96,Default,,0,0,0,,[Nhưng ai có thể chịu nổi]
Dialogue: 0,0:49:14.32,0:49:15.63,Default,,0,0,0,,[một cuộc đời khổ sở như vậy?]
Dialogue: 0,0:49:16.55,0:49:18.07,Default,,0,0,0,,[Nếu ta có thể giúp đỡ hắn,]
Dialogue: 0,0:49:18.92,0:49:22.40,Default,,0,0,0,,[liệu hắn có thể\Nsống một cách bình thường]
Dialogue: 0,0:49:22.40,0:49:23.51,Default,,0,0,0,,[mà không thành Ma Thần không?]
Dialogue: 0,0:49:25.96,0:49:26.76,Default,,0,0,0,,[Lê Tô Tô.]
Dialogue: 0,0:49:27.11,0:49:28.71,Default,,0,0,0,,[Không ngờ mày lại bắt đầu\Nthông cảm cho hắn.]
Dialogue: 0,0:49:29.15,0:49:31.15,Default,,0,0,0,,[Hắn làm bao nhiêu chuyện xấu,\Nhủy hoại Hành Dương Tông,]
Dialogue: 0,0:49:31.15,0:49:32.36,Default,,0,0,0,,[giết nhiều người tới vậy,]
Dialogue: 0,0:49:32.63,0:49:34.40,Default,,0,0,0,,[khiến sinh linh tam giới tứ châu\Nkhốn khổ.]
Dialogue: 0,0:49:34.88,0:49:37.11,Default,,0,0,0,,[Hắn bắt buộc phải gánh món nợ máu này.]
Dialogue: 0,0:49:37.80,0:49:39.40,Default,,0,0,0,,[Bây giờ dù hắn phải khổ sở khốn đốn,]
Dialogue: 0,0:49:39.84,0:49:40.67,Default,,0,0,0,,[thì cũng là số phận của hắn.]
Dialogue: 0,0:49:45.11,0:49:46.76,Default,,0,0,0,,[Nhưng hiện tại là 500 năm trước,]
Dialogue: 0,0:49:47.11,0:49:49.44,Default,,0,0,0,,[hắn chưa từng giết người,\Ncũng không có bản lĩnh làm việc xấu,]
Dialogue: 0,0:49:49.80,0:49:50.84,Default,,0,0,0,,[vô duyên vô cớ]
Dialogue: 0,0:49:50.84,0:49:51.96,Default,,0,0,0,,[bị ức hiếp đủ đường.]
Dialogue: 0,0:49:53.32,0:49:55.59,Default,,0,0,0,,[Từ nhỏ cha đã dạy ta\Nphải ngay thẳng chính trực,]
Dialogue: 0,0:49:55.59,0:49:56.67,Default,,0,0,0,,[nghiêm khắc với bản thân.]
Dialogue: 0,0:49:56.96,0:49:58.44,Default,,0,0,0,,[Giờ đây ta đã biết mọi chuyện,]
Dialogue: 0,0:49:58.55,0:49:59.63,Default,,0,0,0,,[nếu còn vì vậy mà mừng thầm,]
Dialogue: 0,0:50:00.80,0:50:01.96,Default,,0,0,0,,[thì là không phân biệt phải trái.]
Dialogue: 0,0:50:03.15,0:50:03.76,Default,,0,0,0,,Nhị tiểu thư,
Dialogue: 0,0:50:03.76,0:50:05.36,Default,,0,0,0,,người nghỉ một lát\Nrồi hẵng đi thăm đại tiểu thư.
Dialogue: 0,0:50:05.36,0:50:06.84,Default,,0,0,0,,Dù sốt ruột muốn gặp lục điện hạ,
Dialogue: 0,0:50:06.84,0:50:07.76,Default,,0,0,0,,- cũng đừng đi đứng lảo đảo.\N- Ta đi thăm Đàm Đài Tẫn.
Dialogue: 0,0:50:21.11,0:50:23.23,Default,,0,0,0,,[Chỉ cần chúng không thể giết được ngươi,]
Dialogue: 0,0:50:23.36,0:50:26.63,Default,,0,0,0,,[ngươi có thể sử dụng sức mạnh của chúng.]
Dialogue: 0,0:50:29.88,0:50:30.71,Default,,0,0,0,,Sức mạnh.
Dialogue: 0,0:50:51.48,0:50:52.15,Default,,0,0,0,,Thì ra,
Dialogue: 0,0:50:53.63,0:50:55.00,Default,,0,0,0,,sức mạnh hắn nói
Dialogue: 0,0:50:57.03,0:51:00.96,Default,,0,0,0,,là thứ cảm giác này.
Dialogue: 0,0:51:05.80,0:51:10.08,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:51:25.76,0:51:33.52,Default,,0,0,0,,♪Nỗi lòng phàm tục\Nlà ngước mắt lên trăng bỗng khuyết♪
Dialogue: 0,0:51:33.52,0:51:41.32,Default,,0,0,0,,♪Hồng trần là đôi mắt thấy\Nmuôn hoa rụng giữa cơn mưa tuyết♪
Dialogue: 0,0:51:41.32,0:51:48.44,Default,,0,0,0,,♪Trắc ẩn là\Nmột cánh bướm trong lòng khi tan biến♪
Dialogue: 0,0:51:49.04,0:51:52.92,Default,,0,0,0,,♪Tỉnh ngộ là gột rửa hồi ức\Ntrong nước đục♪
Dialogue: 0,0:51:52.92,0:51:57.12,Default,,0,0,0,,♪Từ ấy chẳng gặp nhau♪
Dialogue: 0,0:51:58.68,0:52:02.28,Default,,0,0,0,,♪Ta từng thấy lời dịu dàng, từng nở hoa♪
Dialogue: 0,0:52:02.28,0:52:05.52,Default,,0,0,0,,♪Cay mắt đến nỗi nói mớ♪
Dialogue: 0,0:52:06.08,0:52:10.20,Default,,0,0,0,,♪Tơ tình vấn vương, mái ngói dễ vỡ♪
Dialogue: 0,0:52:10.20,0:52:13.72,Default,,0,0,0,,♪Một vòng tay có sự sợ hãi vô tận♪
Dialogue: 0,0:52:14.32,0:52:17.76,Default,,0,0,0,,♪Ta kính trọng người biết bao,\Nthời gian thấm thoát thoi đưa♪
Dialogue: 0,0:52:17.76,0:52:21.44,Default,,0,0,0,,♪Từng vững tin được yêu trong phút chốc♪
Dialogue: 0,0:52:21.52,0:52:25.64,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:52:25.64,0:52:33.40,Default,,0,0,0,,♪Sự thành kính tựa ánh trăng không tì vết♪
Dialogue: 0,0:52:35.40,0:52:38.80,Default,,0,0,0,,♪Hãy lắng nghe hơi thở của đóa hoa♪
Dialogue: 0,0:52:38.92,0:52:42.32,Default,,0,0,0,,♪Như sự phồn hoa của chúng sinh muôn loài♪
Dialogue: 0,0:52:42.88,0:52:47.08,Default,,0,0,0,,♪Dẫu đi bao lâu, sao trời hay bão cát♪
Dialogue: 0,0:52:47.08,0:52:51.28,Default,,0,0,0,,♪Ánh trăng là bộ giáp của ta♪
Dialogue: 0,0:52:51.28,0:52:54.60,Default,,0,0,0,,♪Ta mong sau này người mang theo vết sẹo♪
Dialogue: 0,0:52:54.60,0:52:58.56,Default,,0,0,0,,♪Cũng thử sống dịu dàng một phen♪
Dialogue: 0,0:52:58.72,0:53:02.24,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:53:02.24,0:53:09.88,Default,,0,0,0,,♪Yêu lại người từng căm hận♪
Dialogue: 0,0:53:09.88,0:53:17.28,Default,,0,0,0,,♪Kiếp phù du nhỏ, giấc mộng lớn♪
Dialogue: 0,0:53:17.28,0:53:25.92,Default,,0,0,0,,♪Xin đừng phụ lòng nhau♪
