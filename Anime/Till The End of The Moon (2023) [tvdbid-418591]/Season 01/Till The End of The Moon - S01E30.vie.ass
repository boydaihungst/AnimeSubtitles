Dialogue: 0,0:00:00.00,0:00:23.20,Default,,0,0,0,,Nhóm dịch đang gắng sức làm việc, mau chóng thay thế bản phụ đề cuối, cảm ơn bạn đã kiên nhẫn chờ đợi.
Dialogue: 0,0:00:23.20,0:00:26.96,Default,,0,0,0,,♪Đêm tối, trăng ướt, máu lạnh♪
Dialogue: 0,0:00:27.40,0:00:30.72,Default,,0,0,0,,♪Phơi bày trước\Nđôi mắt sợ ánh sáng của ta♪
Dialogue: 0,0:00:31.04,0:00:34.48,Default,,0,0,0,,♪Là sáng bừng hay ấm áp♪
Dialogue: 0,0:00:34.68,0:00:38.04,Default,,0,0,0,,♪Ta chỉ có thể suy đoán bằng trực giác♪
Dialogue: 0,0:00:38.92,0:00:46.16,Default,,0,0,0,,♪Ôi, tình yêu khuynh thế như ngọc,\Ntạo nên ta♪
Dialogue: 0,0:00:46.72,0:00:53.88,Default,,0,0,0,,♪Ôi, tơ tình vương vấn♪
Dialogue: 0,0:00:55.36,0:00:58.92,Default,,0,0,0,,♪Ta không sợ trên cõi đời này♪
Dialogue: 0,0:00:59.28,0:01:02.80,Default,,0,0,0,,♪Chúng sinh đối xử với ta ra sao♪
Dialogue: 0,0:01:03.44,0:01:06.60,Default,,0,0,0,,♪Đột phá, vùng vẫy♪
Dialogue: 0,0:01:06.92,0:01:11.20,Default,,0,0,0,,♪Làm sao để phân biệt chính tà, thiện ác♪
Dialogue: 0,0:01:11.64,0:01:14.92,Default,,0,0,0,,♪Từng có khoảnh khắc yếu đuối♪
Dialogue: 0,0:01:15.28,0:01:18.64,Default,,0,0,0,,♪Dùng nụ hôn tình yêu\Nđể vết thương lành lại♪
Dialogue: 0,0:01:19.16,0:01:22.60,Default,,0,0,0,,♪Sự tồn tại của ta♪
Dialogue: 0,0:01:23.12,0:01:29.64,Default,,0,0,0,,♪Sẽ không vì gai nhọn mà gãy cánh♪
Dialogue: 0,0:01:31.40,0:01:36.04,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:01:36.04,0:01:39.00,Default,,0,0,0,,[Tập 30]
Dialogue: 0,0:01:40.56,0:01:43.28,Default,,0,0,0,,[Nay Tiên Môn đứng đầu trong tam giới,]
Dialogue: 0,0:01:43.68,0:01:44.92,Default,,0,0,0,,[nhân giới xếp thứ hai,]
Dialogue: 0,0:01:45.35,0:01:46.71,Default,,0,0,0,,[Hoang Uyên]\N[yêu ma đứng cuối cùng.]
Dialogue: 0,0:01:47.07,0:01:49.43,Default,,0,0,0,,[Chỉ vì vạn năm trước Ma Thần bỏ mạng,]
Dialogue: 0,0:01:50.04,0:01:52.71,Default,,0,0,0,,[Ma giới chúng ta như rồng mất đầu.]
Dialogue: 0,0:01:53.15,0:01:54.48,Default,,0,0,0,,Sao càng đánh\Nđám yêu ma này lại càng đông vậy?
Dialogue: 0,0:01:54.84,0:01:55.79,Default,,0,0,0,,Hoang Uyên quá rộng lớn,
Dialogue: 0,0:01:56.00,0:01:57.12,Default,,0,0,0,,người của chúng ta không đủ.
Dialogue: 0,0:01:57.76,0:01:59.12,Default,,0,0,0,,Phía Bắc cần giúp đỡ.
Dialogue: 0,0:01:59.43,0:02:00.07,Default,,0,0,0,,[Chưởng môn Tiêu Dao Tông, Triệu Du]\NPhía Nam…
Dialogue: 0,0:02:00.23,0:02:02.20,Default,,0,0,0,,Một đoàn yêu ma tràn ra ở phía Nam.
Dialogue: 0,0:02:02.43,0:02:03.20,Default,,0,0,0,,Làm thế nào đây?
Dialogue: 0,0:02:03.40,0:02:04.07,Default,,0,0,0,,Triệu Du chưởng môn!
Dialogue: 0,0:02:04.68,0:02:05.56,Default,,0,0,0,,Triệu Du chưởng môn.
Dialogue: 0,0:02:05.59,0:02:06.76,Default,,0,0,0,,Phù thạch ở phía Đông đã bố trí xong.
Dialogue: 0,0:02:06.76,0:02:07.31,Default,,0,0,0,,Đừng hoảng loạn.
Dialogue: 0,0:02:07.31,0:02:09.75,Default,,0,0,0,,Môn phái ở chiến tuyến phía Đông\Nchia làm hai cánh tả hữu đi chi viện.
Dialogue: 0,0:02:09.75,0:02:11.59,Default,,0,0,0,,Toàn thể chiến tuyến\Ndịch chuyển về phía Bắc.
Dialogue: 0,0:02:11.91,0:02:13.56,Default,,0,0,0,,Phù thạch bên này cũng đã bố trí xong rồi.
Dialogue: 0,0:02:14.84,0:02:15.52,Default,,0,0,0,,Được.
Dialogue: 0,0:02:23.56,0:02:24.24,Default,,0,0,0,,Tới đây.
Dialogue: 0,0:02:41.24,0:02:43.31,Default,,0,0,0,,Mục đích của chúng ta là\Nbố trí cảnh giới Kim Linh.
Dialogue: 0,0:02:43.63,0:02:45.12,Default,,0,0,0,,Đừng để bị yêu ma làm rối loạn.
Dialogue: 0,0:02:45.47,0:02:46.84,Default,,0,0,0,,Các môn phái hãy giữ vững thêm một lát.
Dialogue: 0,0:02:47.12,0:02:49.15,Default,,0,0,0,,Sắp bố trí xong cảnh giới Kim Linh rồi.
Dialogue: 0,0:02:52.59,0:02:54.08,Default,,0,0,0,,[Đại cuộc Hoang Uyên bên này đã định.]
Dialogue: 0,0:02:55.19,0:02:55.91,Default,,0,0,0,,[Lão Cù à,]
Dialogue: 0,0:02:56.59,0:02:58.36,Default,,0,0,0,,[không biết tình hình ông bên đó\Nthế nào rồi?]
Dialogue: 0,0:03:07.94,0:03:13.66,Default,,0,0,0,,[Hành Dương Tông, Phong Yêu Nhai]
Dialogue: 0,0:03:22.08,0:03:22.59,Default,,0,0,0,,Hỏng rồi!
Dialogue: 0,0:03:22.68,0:03:23.71,Default,,0,0,0,,Chúng sắp trốn ra rồi.
Dialogue: 0,0:03:25.96,0:03:26.71,Default,,0,0,0,,Là kiếm của sư phụ.
Dialogue: 0,0:03:27.00,0:03:27.71,Default,,0,0,0,,Sư phụ đến rồi.
Dialogue: 0,0:03:29.84,0:03:30.68,Default,,0,0,0,,Sư phụ.
Dialogue: 0,0:03:30.68,0:03:32.62,Default,,0,0,0,,[Chưởng môn Hành Dương Tông, Cù Huyền Tử]
Dialogue: 0,0:03:36.63,0:03:37.91,Default,,0,0,0,,Củng cố phong ấn cùng ta.
Dialogue: 0,0:03:37.91,0:03:38.43,Default,,0,0,0,,Vâng.
Dialogue: 0,0:03:41.52,0:03:42.03,Default,,0,0,0,,Sư phụ.
Dialogue: 0,0:03:42.52,0:03:43.47,Default,,0,0,0,,Tại sao đám yêu ma này
Dialogue: 0,0:03:43.47,0:03:44.75,Default,,0,0,0,,đều như phát cuồng cùng lúc vậy?
Dialogue: 0,0:03:45.68,0:03:47.31,Default,,0,0,0,,Yêu ma tứ châu đồng thời phát cuồng
Dialogue: 0,0:03:47.80,0:03:49.28,Default,,0,0,0,,chắc chắn là do bị ảnh hưởng gì đó.
Dialogue: 0,0:03:49.96,0:03:52.00,Default,,0,0,0,,[Bọn ta chỉ sống theo bản tính]
Dialogue: 0,0:03:52.36,0:03:54.15,Default,,0,0,0,,[lại như thể chuột qua đường,]
Dialogue: 0,0:03:54.80,0:03:56.75,Default,,0,0,0,,[cứ hở ra là bị giết sạch.]
Dialogue: 0,0:03:57.52,0:03:59.59,Default,,0,0,0,,[Bị phong ấn ở nơi tăm tối\Nkhông có ánh sáng mặt trời này,]
Dialogue: 0,0:04:00.08,0:04:01.43,Default,,0,0,0,,[bị trấn áp trăm năm,]
Dialogue: 0,0:04:02.00,0:04:03.08,Default,,0,0,0,,các người cam tâm không?
Dialogue: 0,0:04:03.91,0:04:05.87,Default,,0,0,0,,Không cam tâm.
Dialogue: 0,0:04:06.00,0:04:07.56,Default,,0,0,0,,Không cam tâm.
Dialogue: 0,0:04:07.91,0:04:10.43,Default,,0,0,0,,Chỉ cần chúng ta tìm lại ma thai,
Dialogue: 0,0:04:10.75,0:04:11.91,Default,,0,0,0,,hồi sinh tôn thượng,
Dialogue: 0,0:04:12.80,0:04:14.80,Default,,0,0,0,,là có thể phục hưng Hoang Uyên.
Dialogue: 0,0:04:16.04,0:04:18.27,Default,,0,0,0,,Dù tộc Di Nguyệt đã đánh mất ma thai,
Dialogue: 0,0:04:18.63,0:04:21.27,Default,,0,0,0,,hại chúng ta tìm kiếm 500 năm vô ích.
Dialogue: 0,0:04:22.19,0:04:24.36,Default,,0,0,0,,May mà tôn thượng đã sớm có trù tính,
Dialogue: 0,0:04:24.87,0:04:26.31,Default,,0,0,0,,để lại ba món ma khí
Dialogue: 0,0:04:26.80,0:04:28.72,Default,,0,0,0,,chỉ dẫn chúng ta tìm kiếm ma thai.
Dialogue: 0,0:04:30.04,0:04:31.83,Default,,0,0,0,,Hôm nay, mục đích thật sự của chúng ta
Dialogue: 0,0:04:32.07,0:04:33.87,Default,,0,0,0,,thực ra là Tiên Môn bé nhỏ hẻo lánh
Dialogue: 0,0:04:33.87,0:04:35.12,Default,,0,0,0,,tên Vân Trường Các này.
Dialogue: 0,0:04:36.19,0:04:39.16,Default,,0,0,0,,Ở đó có trái tim của Ma Thần
Dialogue: 0,0:04:40.12,0:04:41.92,Default,,0,0,0,,và manh mối về ấn Tẩy Tủy.
Dialogue: 0,0:04:43.51,0:04:45.60,Default,,0,0,0,,Ma thai và các ma khí sẽ cảm ứng với nhau.
Dialogue: 0,0:04:46.00,0:04:47.68,Default,,0,0,0,,Chỉ cần tìm được ấn Tẩy Tủy,
Dialogue: 0,0:04:47.92,0:04:50.63,Default,,0,0,0,,thì chắc chắn sẽ có thể\Nchỉ dẫn chúng ta tìm được ma thai.
Dialogue: 0,0:04:51.24,0:04:54.16,Default,,0,0,0,,Chuyện hồi sinh tôn thượng\Nlà chuyện trong tầm tay.
Dialogue: 0,0:04:55.39,0:04:57.24,Default,,0,0,0,,Hồi sinh tôn thượng.
Dialogue: 0,0:04:57.56,0:04:59.63,Default,,0,0,0,,Hồi sinh Ma Thần.
Dialogue: 0,0:05:09.12,0:05:09.63,Default,,0,0,0,,Sư phụ.
Dialogue: 0,0:05:09.87,0:05:10.92,Default,,0,0,0,,Ban nãy sợ người phân tâm
Dialogue: 0,0:05:10.95,0:05:11.83,Default,,0,0,0,,nên không dám báo với người,
Dialogue: 0,0:05:12.36,0:05:13.83,Default,,0,0,0,,phía Thiên Trì cũng\Nphát hiện thay đổi bất thường.
Dialogue: 0,0:05:14.19,0:05:14.75,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:05:16.36,0:05:17.51,Default,,0,0,0,,[Từ mấy canh giờ trước,]
Dialogue: 0,0:05:17.80,0:05:19.83,Default,,0,0,0,,[Hành Dương Tông, Thiên Trì]\N[trên Thiên Trì mây sấm vần vũ,\Ntiếng sấm vang chớp giật không ngừng.]
Dialogue: 0,0:05:26.04,0:05:26.87,Default,,0,0,0,,Đại sư huynh.
Dialogue: 0,0:05:27.87,0:05:28.43,Default,,0,0,0,,Đại sư huynh.
Dialogue: 0,0:05:28.68,0:05:29.39,Default,,0,0,0,,Thiên Trì có thay đổi bất thường.
Dialogue: 0,0:05:29.63,0:05:30.83,Default,,0,0,0,,Sư phụ bảo chúng ta mau chóng qua đó.
Dialogue: 0,0:05:33.92,0:05:34.60,Default,,0,0,0,,Tô Tô.
Dialogue: 0,0:06:15.51,0:06:17.51,Default,,0,0,0,,[Giết Đàm Đài Tẫn trước khi hắn thành Ma,]
Dialogue: 0,0:06:17.80,0:06:19.83,Default,,0,0,0,,[chém đứt vận mệnh Ma Thần giáng thế.]
Dialogue: 0,0:06:20.19,0:06:20.95,Default,,0,0,0,,[Ngươi ngẩng đầu lên.]
Dialogue: 0,0:06:20.95,0:06:21.56,Default,,0,0,0,,[Đàm Đài Tẫn.]
Dialogue: 0,0:06:21.56,0:06:22.72,Default,,0,0,0,,[Đây thực sự là một người sao?]
Dialogue: 0,0:06:22.72,0:06:23.60,Default,,0,0,0,,[Ngươi sẽ chết.]
Dialogue: 0,0:06:24.39,0:06:25.48,Default,,0,0,0,,[Chỉ cần ngươi sống,]
Dialogue: 0,0:06:25.95,0:06:27.39,Default,,0,0,0,,[thì mới có nhiều người sống sót hơn nữa.]
Dialogue: 0,0:06:27.39,0:06:29.07,Default,,0,0,0,,[Thấy người đó thì sẽ vui vẻ.]
Dialogue: 0,0:06:47.48,0:06:50.12,Default,,0,0,0,,[Bầu trời màu xanh…]
Dialogue: 0,0:06:50.12,0:06:50.68,Default,,0,0,0,,Tô Tô!
Dialogue: 0,0:06:57.86,0:07:02.56,Default,,0,0,0,,♪Đi ngược vầng sáng của mọi vì sao♪
Dialogue: 0,0:07:02.56,0:07:03.31,Default,,0,0,0,,- Sư muội!\N- Sư tỷ!
Dialogue: 0,0:07:03.48,0:07:04.19,Default,,0,0,0,,Sư tỷ xuất quan rồi.
Dialogue: 0,0:07:04.27,0:07:04.92,Default,,0,0,0,,Sư tỷ.
Dialogue: 0,0:07:06.00,0:07:06.83,Default,,0,0,0,,Cuối cùng cũng ra ngoài rồi.
Dialogue: 0,0:07:08.83,0:07:09.31,Default,,0,0,0,,Sư tỷ.
Dialogue: 0,0:07:09.74,0:07:12.16,Default,,0,0,0,,♪Bóc trần những tổn thương vận mệnh♪
Dialogue: 0,0:07:12.16,0:07:13.19,Default,,0,0,0,,[Ta trở về rồi.]
Dialogue: 0,0:07:13.87,0:07:14.83,Default,,0,0,0,,[Ta làm được rồi.]
Dialogue: 0,0:07:15.86,0:07:17.74,Default,,0,0,0,,♪Sợ gì thiêu cạn máu♪
Dialogue: 0,0:07:17.74,0:07:21.82,Default,,0,0,0,,♪Kính trọng sự cuồng dã trong quá khứ♪
Dialogue: 0,0:07:22.30,0:07:24.98,Default,,0,0,0,,♪Dù chỉ có một tia hy vọng♪
Dialogue: 0,0:07:25.51,0:07:26.27,Default,,0,0,0,,Tô Tô.
Dialogue: 0,0:07:26.68,0:07:27.39,Default,,0,0,0,,Ta còn tưởng rằng...
Dialogue: 0,0:07:27.39,0:07:28.07,Default,,0,0,0,,Cha ơi!
Dialogue: 0,0:07:28.50,0:07:32.24,Default,,0,0,0,,♪Chưa bao giờ lãng quên cơn gió mạnh♪
Dialogue: 0,0:07:32.24,0:07:33.24,Default,,0,0,0,,Con thành công rồi.
Dialogue: 0,0:07:34.31,0:07:35.39,Default,,0,0,0,,Con làm được rồi.
Dialogue: 0,0:07:35.72,0:07:36.39,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:07:36.80,0:07:37.60,Default,,0,0,0,,Cuối cùng con
Dialogue: 0,0:07:38.43,0:07:39.63,Default,,0,0,0,,cũng lịch kiếp thành công rồi.
Dialogue: 0,0:07:44.68,0:07:45.68,Default,,0,0,0,,Lịch kiếp?
Dialogue: 0,0:07:45.75,0:07:46.27,Default,,0,0,0,,Phải.
Dialogue: 0,0:07:46.75,0:07:48.12,Default,,0,0,0,,Dù không biết tại sao
Dialogue: 0,0:07:48.31,0:07:49.27,Default,,0,0,0,,lôi kiếp của con không giáng xuống,
Dialogue: 0,0:07:49.63,0:07:50.83,Default,,0,0,0,,coi như con đã bình an vượt qua
Dialogue: 0,0:07:51.36,0:07:52.60,Default,,0,0,0,,kiếp nạn trong số phận này.
Dialogue: 0,0:07:54.07,0:07:55.19,Default,,0,0,0,,[Lôi kiếp?]
Dialogue: 0,0:07:57.24,0:07:58.75,Default,,0,0,0,,[Không phải đã giáng xuống rồi sao?]
Dialogue: 0,0:08:00.60,0:08:01.19,Default,,0,0,0,,Cha à,
Dialogue: 0,0:08:01.56,0:08:03.00,Default,,0,0,0,,điều con nói không phải lôi kiếp.
Dialogue: 0,0:08:03.83,0:08:06.51,Default,,0,0,0,,Ban đầu người và Triệu Du bá bá\Ndùng gương Quá Khứ…
Dialogue: 0,0:08:06.51,0:08:07.16,Default,,0,0,0,,Gương Quá Khứ?
Dialogue: 0,0:08:07.87,0:08:09.39,Default,,0,0,0,,Bảo vật trấn phái của Tiêu Dao Tông à?
Dialogue: 0,0:08:10.16,0:08:11.92,Default,,0,0,0,,Chúng ta dùng chiếc gương đó lúc nào?
Dialogue: 0,0:08:12.95,0:08:13.72,Default,,0,0,0,,[Phải rồi.]
Dialogue: 0,0:08:14.16,0:08:16.63,Default,,0,0,0,,[Ta đã chém đứt vận mệnh\NMa Thần giáng thế.]
Dialogue: 0,0:08:16.72,0:08:18.19,Default,,0,0,0,,[Phụ thân và người khác\Nchưa chắc đã hiểu được]
Dialogue: 0,0:08:18.19,0:08:20.39,Default,,0,0,0,,chuyện dùng gương Quá Khứ\Nđưa ta về 500 năm trước.]
Dialogue: 0,0:08:21.07,0:08:21.63,Default,,0,0,0,,Tô Tô.
Dialogue: 0,0:08:21.92,0:08:24.16,Default,,0,0,0,,Chẳng lẽ mười năm bế quan này\Nkhiến con hồ đồ mất rồi?
Dialogue: 0,0:08:25.04,0:08:26.56,Default,,0,0,0,,Con đã bế quan mười năm?
Dialogue: 0,0:08:27.63,0:08:28.63,Default,,0,0,0,,Con thực sự không nhớ nữa à?
Dialogue: 0,0:08:29.19,0:08:31.04,Default,,0,0,0,,Mười năm trước con đột nhiên tự bốc cháy
Dialogue: 0,0:08:31.04,0:08:31.87,Default,,0,0,0,,rồi chìm vào giấc ngủ say
Dialogue: 0,0:08:32.39,0:08:33.55,Default,,0,0,0,,đến hôm nay mới tỉnh.
Dialogue: 0,0:08:38.15,0:08:41.00,Default,,0,0,0,,Vậy nên hiện giờ\Ntrên đời không có Ma Thần?
Dialogue: 0,0:08:41.96,0:08:43.32,Default,,0,0,0,,Không có đạo Đồng Bi?
Dialogue: 0,0:08:44.24,0:08:45.67,Default,,0,0,0,,Cũng không có kiếp nạn không gì bì được?
Dialogue: 0,0:08:46.44,0:08:47.15,Default,,0,0,0,,Phải không ạ?
Dialogue: 0,0:08:47.84,0:08:48.32,Default,,0,0,0,,Phải.
Dialogue: 0,0:08:51.72,0:08:52.44,Default,,0,0,0,,Tốt quá rồi.
Dialogue: 0,0:08:54.12,0:08:54.87,Default,,0,0,0,,Tốt quá rồi.
Dialogue: 0,0:08:56.79,0:08:59.00,Default,,0,0,0,,Muội bình yên vô sự thực là tốt quá.
Dialogue: 0,0:09:00.39,0:09:01.39,Default,,0,0,0,,[Tiêu Lẫm?]
Dialogue: 0,0:09:03.03,0:09:04.55,Default,,0,0,0,,Ta luôn mong muội có thể tỉnh lại.
Dialogue: 0,0:09:04.67,0:09:05.15,Default,,0,0,0,,[Không.]
Dialogue: 0,0:09:05.67,0:09:06.84,Default,,0,0,0,,[Bây giờ ta trở về rồi,]
Dialogue: 0,0:09:07.24,0:09:08.48,Default,,0,0,0,,[nên gọi là Công Dã sư huynh.]
Dialogue: 0,0:09:08.75,0:09:09.67,Default,,0,0,0,,Đa tạ, đại sư huynh.
Dialogue: 0,0:09:11.20,0:09:11.67,Default,,0,0,0,,Tô Tô.
Dialogue: 0,0:09:12.00,0:09:12.48,Default,,0,0,0,,Tịch Vô.
Dialogue: 0,0:09:13.48,0:09:14.00,Default,,0,0,0,,Đi nào.
Dialogue: 0,0:09:14.48,0:09:15.27,Default,,0,0,0,,Chúng ta về nhà nào.
Dialogue: 0,0:09:19.72,0:09:20.36,Default,,0,0,0,,[Tô Tô,]
Dialogue: 0,0:09:21.32,0:09:23.00,Default,,0,0,0,,[sao muội lại xa lạ với ta như vậy?]
Dialogue: 0,0:09:26.15,0:09:26.87,Default,,0,0,0,,Lão Cù à,
Dialogue: 0,0:09:27.87,0:09:29.20,Default,,0,0,0,,Tô Tô đã xuất quan rồi.
Dialogue: 0,0:09:30.24,0:09:31.87,Default,,0,0,0,,Trái tim thấp thỏm mười năm của ông
Dialogue: 0,0:09:33.08,0:09:34.44,Default,,0,0,0,,cuối cùng đã có thể được yên nhỉ?
Dialogue: 0,0:09:37.32,0:09:39.39,Default,,0,0,0,,Lần này Tô Tô xuất quan\Ncũng có chút kỳ lạ.
Dialogue: 0,0:09:40.20,0:09:41.39,Default,,0,0,0,,Tu vi không tăng mà còn giảm.
Dialogue: 0,0:09:41.39,0:09:42.67,Default,,0,0,0,,Không biết đã xảy ra chuyện gì.
Dialogue: 0,0:09:43.60,0:09:44.44,Default,,0,0,0,,Nếu ông có thời gian,
Dialogue: 0,0:09:44.48,0:09:45.79,Default,,0,0,0,,hãy xem giúp nó.
Dialogue: 0,0:09:46.96,0:09:49.32,Default,,0,0,0,,Phải rồi,\Nphía Hoang Uyên xử lý ra sao rồi?
Dialogue: 0,0:09:49.79,0:09:51.75,Default,,0,0,0,,Lần này tới đây chính là vì chuyện này.
Dialogue: 0,0:09:51.75,0:09:53.44,Default,,0,0,0,,Đã bố trí cảnh giới Kim Kinh ổn thỏa.
Dialogue: 0,0:09:53.75,0:09:54.51,Default,,0,0,0,,Đám yêu ma kia
Dialogue: 0,0:09:54.51,0:09:56.32,Default,,0,0,0,,tạm thời sẽ không thể\Ngây nên sóng gió gì nữa.
Dialogue: 0,0:09:56.84,0:09:58.00,Default,,0,0,0,,Nhưng nói đi phải nói lại,
Dialogue: 0,0:09:58.51,0:09:59.60,Default,,0,0,0,,lần này chỉ không thấy
Dialogue: 0,0:09:59.60,0:10:02.15,Default,,0,0,0,,hai ma đầu Tự Anh và Kinh Diệt.
Dialogue: 0,0:10:02.44,0:10:04.27,Default,,0,0,0,,Lòng ta cứ luôn thấy bất an.
Dialogue: 0,0:10:05.27,0:10:06.55,Default,,0,0,0,,Gần đây hai ma đầu này
Dialogue: 0,0:10:06.55,0:10:08.79,Default,,0,0,0,,có hành tung bí hiểm ở tam giới tứ châu.
Dialogue: 0,0:10:10.75,0:10:13.03,Default,,0,0,0,,Cũng không biết có phải\Ncó mưu tính gì khác không nữa?
Dialogue: 0,0:10:13.03,0:10:14.39,Default,,0,0,0,,Vẫn phải chú ý.
Dialogue: 0,0:10:15.63,0:10:16.32,Default,,0,0,0,,Phải rồi.
Dialogue: 0,0:10:17.75,0:10:18.63,Default,,0,0,0,,Thư của sư đệ ta.
Dialogue: 0,0:10:19.48,0:10:20.08,Default,,0,0,0,,Triệu Ân?
Dialogue: 0,0:10:21.51,0:10:23.00,Default,,0,0,0,,Không phải đã đến Vân Trường Các rồi sao?
Dialogue: 0,0:10:26.12,0:10:26.72,Default,,0,0,0,,May mà
Dialogue: 0,0:10:28.15,0:10:29.20,Default,,0,0,0,,đệ ấy đến muộn nửa ngày
Dialogue: 0,0:10:29.20,0:10:30.60,Default,,0,0,0,,mới may mắn sống được.
Dialogue: 0,0:10:31.00,0:10:32.08,Default,,0,0,0,,Ta nghi ngờ,
Dialogue: 0,0:10:32.39,0:10:35.36,Default,,0,0,0,,đây chính là nguyên nhân\Nhai ma đầu không xuất hiện lần này.
Dialogue: 0,0:10:35.75,0:10:36.84,Default,,0,0,0,,Chuyện này liên đới hệ trọng.
Dialogue: 0,0:10:37.67,0:10:40.24,Default,,0,0,0,,Triệu tập các Tiên Môn\Ncùng bàn bạc mới được.
Dialogue: 0,0:10:41.03,0:10:42.00,Default,,0,0,0,,Nhưng ta nghe nói,
Dialogue: 0,0:10:42.27,0:10:44.72,Default,,0,0,0,,Sầm chưởng môn của Xích Tiêu Tông\Nđang đi vân du,
Dialogue: 0,0:10:45.24,0:10:46.60,Default,,0,0,0,,không biết sẽ đến lúc nào.
Dialogue: 0,0:10:48.91,0:10:51.55,Default,,0,0,0,,Sầm chưởng môn là tiên phong trừ ma vệ đạo*.\N[*Trừ yêu ma, bảo vệ đạo]
Dialogue: 0,0:10:52.00,0:10:53.63,Default,,0,0,0,,nhận được tin tức sẽ đến ngay.
Dialogue: 0,0:10:54.15,0:10:54.72,Default,,0,0,0,,Lão Cù,
Dialogue: 0,0:10:55.12,0:10:56.87,Default,,0,0,0,,hôm nay ta tìm ông còn một việc nữa.
Dialogue: 0,0:10:57.39,0:11:00.27,Default,,0,0,0,,Bất Hư chân nhân\Nbảo ta đến bờ sông Nhược Thủy,
Dialogue: 0,0:11:01.55,0:11:02.91,Default,,0,0,0,,nói là phía Đông Nam có điềm lạ.
Dialogue: 0,0:11:03.24,0:11:05.67,Default,,0,0,0,,Còn đặc biệt dặn dò rằng chuyện này\Nta nhất định phải đích thân đi.
Dialogue: 0,0:11:06.44,0:11:07.63,Default,,0,0,0,,Ta theo lời bảo đến đó,
Dialogue: 0,0:11:07.75,0:11:09.48,Default,,0,0,0,,kết quả đưa được một người về.
Dialogue: 0,0:11:09.84,0:11:11.24,Default,,0,0,0,,Không biết làm vậy
Dialogue: 0,0:11:11.44,0:11:12.67,Default,,0,0,0,,là phúc hay họa.
Dialogue: 0,0:11:35.72,0:11:36.84,Default,,0,0,0,,Đây không phải là sông U Minh.
Dialogue: 0,0:11:37.55,0:11:38.32,Default,,0,0,0,,Đây là đâu?
Dialogue: 0,0:11:44.48,0:11:45.20,Default,,0,0,0,,Đây là…
Dialogue: 0,0:11:46.44,0:11:47.03,Default,,0,0,0,,Phải rồi.
Dialogue: 0,0:11:47.84,0:11:49.63,Default,,0,0,0,,Ta rơi vào vùng nước sâu U Minh,
Dialogue: 0,0:11:50.15,0:11:51.00,Default,,0,0,0,,sau đó,
Dialogue: 0,0:11:51.87,0:11:53.00,Default,,0,0,0,,nó đã xuất hiện.
Dialogue: 0,0:13:10.32,0:13:11.51,Default,,0,0,0,,Cái nỏ đen đó,
Dialogue: 0,0:13:12.51,0:13:13.91,Default,,0,0,0,,ta đã từng thấy
Dialogue: 0,0:13:14.48,0:13:15.32,Default,,0,0,0,,trong Bát Nhã Phù Sinh.
Dialogue: 0,0:13:37.72,0:13:38.24,Default,,0,0,0,,Tiên hữu,
Dialogue: 0,0:13:38.24,0:13:38.96,Default,,0,0,0,,huynh không sao chứ?
Dialogue: 0,0:13:41.27,0:13:42.00,Default,,0,0,0,,Dậy nào.
Dialogue: 0,0:13:43.51,0:13:44.36,Default,,0,0,0,,Không sao chứ?
Dialogue: 0,0:13:44.55,0:13:45.44,Default,,0,0,0,,Huynh tỉnh lúc nào
Dialogue: 0,0:13:45.44,0:13:46.48,Default,,0,0,0,,mà cũng không gọi một tiếng.
Dialogue: 0,0:13:49.96,0:13:51.36,Default,,0,0,0,,Sao ta lại ở nơi này?
Dialogue: 0,0:13:51.79,0:13:53.39,Default,,0,0,0,,Sư phụ bọn ta đưa huynh về đấy.
Dialogue: 0,0:13:53.48,0:13:55.32,Default,,0,0,0,,Sư phụ ta là chưởng môn Tiêu Dao Tông.
Dialogue: 0,0:13:55.32,0:13:56.48,Default,,0,0,0,,Người là Triệu Du chân nhân
Dialogue: 0,0:13:56.72,0:13:58.39,Default,,0,0,0,,danh tiếng lẫy lừng trong các tiên nhân.
Dialogue: 0,0:13:58.87,0:14:00.12,Default,,0,0,0,,Huynh may mắn thật đấy!
Dialogue: 0,0:14:00.20,0:14:02.03,Default,,0,0,0,,Ta đã làm phép giáng mưa Cửu Thiên,
Dialogue: 0,0:14:02.44,0:14:04.08,Default,,0,0,0,,lại thêm vảy Hộ Tâm che chở,
Dialogue: 0,0:14:04.39,0:14:05.32,Default,,0,0,0,,không lâu nữa,
Dialogue: 0,0:14:05.55,0:14:06.96,Default,,0,0,0,,nơi đây sẽ trở thành nơi
Dialogue: 0,0:14:06.96,0:14:08.48,Default,,0,0,0,,tiên linh dồi dào.
Dialogue: 0,0:14:09.08,0:14:10.36,Default,,0,0,0,,[Nơi đây núi non bao quanh,]
Dialogue: 0,0:14:10.67,0:14:12.36,Default,,0,0,0,,[mặt trời, mặt trăng\Nkhông chiếu vào được thung lũng,]
Dialogue: 0,0:14:13.15,0:14:14.36,Default,,0,0,0,,[vậy cứ gọi là núi Bất Chiếu đi.]
Dialogue: 0,0:14:17.27,0:14:18.03,Default,,0,0,0,,[Đây…]
Dialogue: 0,0:14:18.67,0:14:20.79,Default,,0,0,0,,[chính là núi Bất Chiếu Minh Dạ để lại.]
Dialogue: 0,0:14:34.36,0:14:35.12,Default,,0,0,0,,Tiểu tử,
Dialogue: 0,0:14:35.32,0:14:36.12,Default,,0,0,0,,ngươi tỉnh rồi à?
Dialogue: 0,0:14:36.27,0:14:38.72,Default,,0,0,0,,Không cảm tạ\Nân nhân cứu mạng ngươi chút sao?
Dialogue: 0,0:14:47.84,0:14:48.75,Default,,0,0,0,,[Là ông ấy.]
Dialogue: 0,0:14:50.24,0:14:52.55,Default,,0,0,0,,[Xem ra Diệp Tịch Vụ\Nvốn nên sống ở hiện tại]
Dialogue: 0,0:14:53.87,0:14:55.15,Default,,0,0,0,,[lại vì ta…]
Dialogue: 0,0:14:58.00,0:14:58.75,Default,,0,0,0,,Đa tạ đã cứu giúp.
Dialogue: 0,0:14:59.48,0:15:00.51,Default,,0,0,0,,Ta còn có việc quan trọng cần làm.
Dialogue: 0,0:15:01.27,0:15:01.75,Default,,0,0,0,,Cáo từ.
Dialogue: 0,0:15:06.55,0:15:07.91,Default,,0,0,0,,Đừng vội đi.
Dialogue: 0,0:15:09.27,0:15:10.84,Default,,0,0,0,,Ngươi cứ vội vàng ra đi như vậy
Dialogue: 0,0:15:11.79,0:15:13.79,Default,,0,0,0,,là muốn về sông U Minh phải không?
Dialogue: 0,0:15:15.79,0:15:17.60,Default,,0,0,0,,Ngươi có biết cổng Nhược Thủy
Dialogue: 0,0:15:18.08,0:15:20.44,Default,,0,0,0,,phải 500 năm mới mở một lần không?
Dialogue: 0,0:15:21.03,0:15:23.00,Default,,0,0,0,,Dù cho có đi được đến bờ sông Nhược Thủy
Dialogue: 0,0:15:23.79,0:15:25.15,Default,,0,0,0,,thì ngươi định
Dialogue: 0,0:15:26.12,0:15:27.32,Default,,0,0,0,,mở cổng Nhược Thủy bằng cách nào?
Dialogue: 0,0:15:31.15,0:15:32.39,Default,,0,0,0,,Ta không thể ở lại.
Dialogue: 0,0:15:33.60,0:15:35.00,Default,,0,0,0,,Ta nhất định phải tìm được nàng ấy.
Dialogue: 0,0:15:36.67,0:15:38.48,Default,,0,0,0,,Không lẽ ngươi muốn đi vớt nguyên thần hả?
Dialogue: 0,0:15:38.87,0:15:40.39,Default,,0,0,0,,Người chết không thể sống lại.
Dialogue: 0,0:15:41.00,0:15:42.15,Default,,0,0,0,,Cô ấy đã chết rồi.
Dialogue: 0,0:15:42.15,0:15:43.87,Default,,0,0,0,,Ngươi vớt nguyên thần của cô ấy về\Nthì có ích gì?
Dialogue: 0,0:15:46.91,0:15:48.84,Default,,0,0,0,,Tiểu tử nhà ngươi đúng là đứa cứng đầu.
Dialogue: 0,0:15:49.60,0:15:51.48,Default,,0,0,0,,Sư thúc tổ Bất Hư truyền tin cho ta,
Dialogue: 0,0:15:51.75,0:15:53.32,Default,,0,0,0,,bảo ta qua bờ Nhược Thủy nhặt người.
Dialogue: 0,0:15:53.72,0:15:55.67,Default,,0,0,0,,Ta còn tưởng là\Nnhặt được món bảo bối lớn thế nào,
Dialogue: 0,0:15:58.08,0:16:00.24,Default,,0,0,0,,sao lại nhặt về\Nmón lỗ vốn nhà ngươi cơ chứ?
Dialogue: 0,0:16:01.27,0:16:02.08,Default,,0,0,0,,Để cứu ngươi,
Dialogue: 0,0:16:02.51,0:16:03.44,Default,,0,0,0,,ta đã tiêu tốn biết bao
Dialogue: 0,0:16:03.44,0:16:04.91,Default,,0,0,0,,vật trân quý của Tiêu Dao Tông.
Dialogue: 0,0:16:05.27,0:16:06.67,Default,,0,0,0,,Khó khăn lắm mới cứu được ngươi,
Dialogue: 0,0:16:06.79,0:16:08.60,Default,,0,0,0,,vậy mà ngươi phủi mông rồi đòi bỏ đi ư?
Dialogue: 0,0:16:09.84,0:16:10.96,Default,,0,0,0,,Vậy ngài muốn như thế nào?
Dialogue: 0,0:16:11.87,0:16:13.15,Default,,0,0,0,,Nếu không tìm thấy nàng ấy,
Dialogue: 0,0:16:13.75,0:16:15.84,Default,,0,0,0,,ta sống có khác gì đã chết.
Dialogue: 0,0:16:29.15,0:16:29.67,Default,,0,0,0,,Thôi,
Dialogue: 0,0:16:30.20,0:16:31.84,Default,,0,0,0,,coi như ta mua bán lỗ vốn một lần vậy.
Dialogue: 0,0:16:43.48,0:16:44.91,Default,,0,0,0,,Triệu Du ta luôn có trước có sau.
Dialogue: 0,0:16:45.63,0:16:47.32,Default,,0,0,0,,Nếu tiểu tử nhà ngươi một lòng muốn chết
Dialogue: 0,0:16:48.00,0:16:49.84,Default,,0,0,0,,thì cũng phải ra khỏi Tiêu Dao Tông của ta
Dialogue: 0,0:16:49.84,0:16:50.63,Default,,0,0,0,,rồi mới được chết.
Dialogue: 0,0:16:50.63,0:16:51.36,Default,,0,0,0,,Sư phụ,
Dialogue: 0,0:16:51.63,0:16:52.75,Default,,0,0,0,,cứ để hắn đi như vậy thật sao?
Dialogue: 0,0:16:52.79,0:16:53.51,Default,,0,0,0,,Yên tâm đi.
Dialogue: 0,0:16:54.03,0:16:55.32,Default,,0,0,0,,Hắn không rời khỏi đây được đâu.
Dialogue: 0,0:16:55.75,0:16:56.96,Default,,0,0,0,,Cuối cùng vẫn sẽ quay lại thôi.
Dialogue: 0,0:16:58.63,0:17:00.67,Default,,0,0,0,,Hay…
Dialogue: 0,0:17:01.60,0:17:03.91,Default,,0,0,0,,[Có lẽ đây chính là\NTiên Môn mà Diệp Tịch Vụ nhắc đến.]
Dialogue: 0,0:17:05.00,0:17:06.55,Default,,0,0,0,,[Cổng Nhược Thủy đã đóng lại,]
Dialogue: 0,0:17:07.35,0:17:09.31,Default,,0,0,0,,[phải đợi 500 năm nữa mới lại mở ra.]
Dialogue: 0,0:17:10.24,0:17:11.35,Default,,0,0,0,,[Rời khỏi đây thì dễ,]
Dialogue: 0,0:17:12.27,0:17:14.31,Default,,0,0,0,,[nhưng ta nên đi đâu\Nđể tìm Diệp Tịch Vụ đây?]
Dialogue: 0,0:17:21.20,0:17:21.83,Default,,0,0,0,,Sư huynh,
Dialogue: 0,0:17:21.96,0:17:22.59,Default,,0,0,0,,huynh đã nhường rồi.
Dialogue: 0,0:17:22.68,0:17:24.00,Default,,0,0,0,,Thua lần này thì còn có lần sau.
Dialogue: 0,0:17:24.24,0:17:26.03,Default,,0,0,0,,Sớm muộn gì đệ cũng sẽ chiến thắng\Nhuynh và kiếm Trứ Côn của huynh.
Dialogue: 0,0:17:30.24,0:17:30.68,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:17:31.27,0:17:32.00,Default,,0,0,0,,Đi nào…
Dialogue: 0,0:17:32.64,0:17:33.07,Default,,0,0,0,,Đi nào.
Dialogue: 0,0:17:37.51,0:17:39.48,Default,,0,0,0,,[Đàm Đài điện hạ bỏ nước rời đô,]
Dialogue: 0,0:17:39.48,0:17:40.31,Default,,0,0,0,,[đến nước Thịnh chúng ta làm khách,]
Dialogue: 0,0:17:40.31,0:17:41.79,Default,,0,0,0,,[là vì mối bang giao của hai nước,]
Dialogue: 0,0:17:41.79,0:17:43.24,Default,,0,0,0,,[Chúng ta nên đối đãi với ngài ấy\Ntheo lễ nghĩa,]
Dialogue: 0,0:17:43.24,0:17:44.51,Default,,0,0,0,,[sao có thể mặc sức ức hiếp như vậy?]
Dialogue: 0,0:17:44.51,0:17:45.83,Default,,0,0,0,,[Trước đây trong vương cung nước Thịnh,]
Dialogue: 0,0:17:46.00,0:17:47.40,Default,,0,0,0,,[chúng ta một người là hoàng tử,]
Dialogue: 0,0:17:47.83,0:17:48.92,Default,,0,0,0,,[một người là con tin,]
Dialogue: 0,0:17:48.96,0:17:50.16,Default,,0,0,0,,[khác nhau một trời một vực.]
Dialogue: 0,0:17:50.92,0:17:53.31,Default,,0,0,0,,[Một năm sau,\Nkhông ngờ lại chĩa gươm đao vào nhau,]
Dialogue: 0,0:17:53.68,0:17:55.35,Default,,0,0,0,,[cuối cùng thành hận nước thù nhà.]
Dialogue: 0,0:17:55.35,0:17:56.59,Default,,0,0,0,,[Ta muốn ngươi hạ chỉ]
Dialogue: 0,0:17:56.79,0:17:57.88,Default,,0,0,0,,[lui binh ngừng chiến.]
Dialogue: 0,0:17:58.16,0:18:01.07,Default,,0,0,0,,[Mà nay thứ ngăn cách giữa chúng ta]
Dialogue: 0,0:18:01.35,0:18:03.44,Default,,0,0,0,,[đã là ranh giới sống chết rồi.]
Dialogue: 0,0:18:04.96,0:18:06.83,Default,,0,0,0,,[Đàm Đài huynh]\N[Lẫm biết huynh không nỡ để ta chết,]
Dialogue: 0,0:18:07.72,0:18:10.79,Default,,0,0,0,,[nhưng chỉ có chết đi,\Nta mới được giải thoát.]
Dialogue: 0,0:18:12.24,0:18:15.07,Default,,0,0,0,,[Nay tạ ơn huynh tác thành.]
Dialogue: 0,0:18:16.92,0:18:17.92,Default,,0,0,0,,Tiêu Lẫm.
Dialogue: 0,0:18:23.03,0:18:23.68,Default,,0,0,0,,Tiêu Lẫm.
Dialogue: 0,0:18:30.48,0:18:31.40,Default,,0,0,0,,Vị huynh đài này trông lạ mặt quá,
Dialogue: 0,0:18:31.92,0:18:33.16,Default,,0,0,0,,huynh cũng là đệ tử của Tiêu Dao Tông ư?
Dialogue: 0,0:18:34.11,0:18:35.75,Default,,0,0,0,,Không biết nên xưng hô như thế nào?
Dialogue: 0,0:18:37.00,0:18:38.40,Default,,0,0,0,,Sao ngươi lại ở đây?
Dialogue: 0,0:18:39.07,0:18:39.64,Default,,0,0,0,,Ta sao?
Dialogue: 0,0:18:41.51,0:18:43.68,Default,,0,0,0,,E rằng vị huynh đài này\Nnhận nhầm người rồi.
Dialogue: 0,0:18:45.55,0:18:46.68,Default,,0,0,0,,Tại hạ là Công Dã Tịch Vô,
Dialogue: 0,0:18:47.35,0:18:49.24,Default,,0,0,0,,đại đệ tử của chưởng môn Hành Dương Tông.
Dialogue: 0,0:18:50.59,0:18:51.68,Default,,0,0,0,,Công Dã Tịch Vô?
Dialogue: 0,0:18:54.16,0:18:54.79,Default,,0,0,0,,Ra là vậy.
Dialogue: 0,0:18:55.68,0:18:57.03,Default,,0,0,0,,Nếu huynh đài không quen thuộc nơi đây
Dialogue: 0,0:18:57.48,0:18:58.59,Default,,0,0,0,,thì để ta tiễn huynh thêm một quãng đường.
Dialogue: 0,0:18:59.68,0:19:00.64,Default,,0,0,0,,Thành thật mà nói,
Dialogue: 0,0:19:01.24,0:19:03.11,Default,,0,0,0,,ngoại hình của Công Dã sư huynh
Dialogue: 0,0:19:03.11,0:19:05.44,Default,,0,0,0,,rất giống với một vị bằng hữu cũ của ta.
Dialogue: 0,0:19:07.88,0:19:09.03,Default,,0,0,0,,Không biết Công Dã sư huynh
Dialogue: 0,0:19:09.03,0:19:10.11,Default,,0,0,0,,là người ở đâu?
Dialogue: 0,0:19:10.20,0:19:11.83,Default,,0,0,0,,Có lẽ giữa hai người có chút quan hệ.
Dialogue: 0,0:19:14.83,0:19:15.88,Default,,0,0,0,,Ta…
Dialogue: 0,0:19:16.55,0:19:18.72,Default,,0,0,0,,được Bất Hư chân nhân nhận nuôi.
Dialogue: 0,0:19:19.48,0:19:22.48,Default,,0,0,0,,Ta cũng không biết mình đến từ đâu.
Dialogue: 0,0:19:23.35,0:19:25.03,Default,,0,0,0,,[Lại là tên Bất Hư chân nhân này.]
Dialogue: 0,0:19:27.24,0:19:29.20,Default,,0,0,0,,Ta có thể gặp\NBất Hư chân nhân một lần không?
Dialogue: 0,0:19:29.83,0:19:31.24,Default,,0,0,0,,Ngài ấy từng truyền tin cứu ta một mạng,
Dialogue: 0,0:19:31.75,0:19:33.24,Default,,0,0,0,,ta muốn chính miệng cảm tạ ngài ấy.
Dialogue: 0,0:19:36.79,0:19:37.48,Default,,0,0,0,,Chính là ở đây.
Dialogue: 0,0:19:41.00,0:19:42.48,Default,,0,0,0,,Sau khi quy tiên, Bất Hư chân nhân
Dialogue: 0,0:19:42.83,0:19:44.24,Default,,0,0,0,,ẩn mình trong đóa Kim Hoa này.
Dialogue: 0,0:19:46.88,0:19:48.40,Default,,0,0,0,,Vậy vị Bất Hư chân nhân này
Dialogue: 0,0:19:49.03,0:19:50.31,Default,,0,0,0,,vì sao lại tạ thế?
Dialogue: 0,0:19:53.11,0:19:55.00,Default,,0,0,0,,Nghe nói Bất Hư chân nhân\Ntừng thăm thú nhân gian,
Dialogue: 0,0:19:55.92,0:19:57.51,Default,,0,0,0,,[quá quen với yêu hận biệt ly\Ncủa thế nhân,]
Dialogue: 0,0:19:58.68,0:19:59.75,Default,,0,0,0,,[tuy thành công nhìn thấu duyên phận,]
Dialogue: 0,0:20:00.16,0:20:01.75,Default,,0,0,0,,nhưng lại chưa thể tu thành\Nthuật trường sinh.
Dialogue: 0,0:20:03.00,0:20:04.40,Default,,0,0,0,,Mãi đến năm ngài ấy 90 tuổi,
Dialogue: 0,0:20:04.51,0:20:05.83,Default,,0,0,0,,[dưới núi mở một sòng bạc mới.]
Dialogue: 0,0:20:07.27,0:20:08.64,Default,,0,0,0,,[Ngài xuống đó thắng lớn một lần,]
Dialogue: 0,0:20:09.16,0:20:11.27,Default,,0,0,0,,[lẩy bẩy chống gậy quay về núi,]
Dialogue: 0,0:20:12.24,0:20:13.83,Default,,0,0,0,,[vui vẻ quá độ mà té nhào một cái,]
Dialogue: 0,0:20:14.51,0:20:15.68,Default,,0,0,0,,[bảy ngày sau thì quy tiên.]
Dialogue: 0,0:20:18.00,0:20:20.24,Default,,0,0,0,,Vậy ta phải làm thế nào\Nmới có thể trực tiếp cảm tạ ngài ấy?
Dialogue: 0,0:20:20.83,0:20:22.64,Default,,0,0,0,,Chỉ cần dùng thuật pháp Tiên Môn ta\Nđể triệu hồi ngài ấy là được.
Dialogue: 0,0:20:22.96,0:20:23.59,Default,,0,0,0,,Giống như thế này.
Dialogue: 0,0:20:35.96,0:20:37.00,Default,,0,0,0,,[Bàng Nghi Chi?]
Dialogue: 0,0:20:38.20,0:20:39.11,Default,,0,0,0,,[Lần này ta đến]
Dialogue: 0,0:20:39.51,0:20:41.88,Default,,0,0,0,,[là muốn đổi một vật với bệ hạ.]
Dialogue: 0,0:20:42.00,0:20:45.35,Default,,0,0,0,,[Ta muốn đổi lấy\Nmột bình máu đầu tim của bệ hạ.]
Dialogue: 0,0:20:45.48,0:20:46.31,Default,,0,0,0,,[Bàng Nghi Chi,]
Dialogue: 0,0:20:46.72,0:20:47.75,Default,,0,0,0,,[ngươi cần máu này để làm gì?]
Dialogue: 0,0:20:48.68,0:20:50.40,Default,,0,0,0,,[Việc này không liên quan gì đến bệ hạ.]
Dialogue: 0,0:20:58.88,0:21:01.68,Default,,0,0,0,,Đây rốt cuộc là nguyên thần hay là ảo ảnh?
Dialogue: 0,0:21:02.35,0:21:03.00,Default,,0,0,0,,Đều không phải.
Dialogue: 0,0:21:03.72,0:21:06.20,Default,,0,0,0,,Đây là một thuật pháp thú vị\Ncó tên là Vân Đoan,
Dialogue: 0,0:21:07.03,0:21:08.27,Default,,0,0,0,,do Bất Hư chân nhân sáng tạo ra.
Dialogue: 0,0:21:09.00,0:21:10.51,Default,,0,0,0,,Ngài nói thân xác có giới hạn,
Dialogue: 0,0:21:10.92,0:21:12.07,Default,,0,0,0,,nhưng ý thức có thể mãi trường tồn,
Dialogue: 0,0:21:12.40,0:21:14.92,Default,,0,0,0,,cho nên ngài đã bố trí thuật pháp này\Ntrước khi quy tiên,
Dialogue: 0,0:21:15.48,0:21:16.64,Default,,0,0,0,,lưu lại ý thức của bản thân.
Dialogue: 0,0:21:21.07,0:21:21.75,Default,,0,0,0,,Công Dã huynh,
Dialogue: 0,0:21:22.24,0:21:24.31,Default,,0,0,0,,ta có lời muốn hỏi\Nvị Bất Hư chân nhân này.
Dialogue: 0,0:21:24.96,0:21:25.68,Default,,0,0,0,,Huynh có thể…
Dialogue: 0,0:21:26.59,0:21:27.64,Default,,0,0,0,,tránh mặt một lúc trước được không?
Dialogue: 0,0:21:29.83,0:21:30.59,Default,,0,0,0,,Huynh cứ hỏi đi.
Dialogue: 0,0:21:31.16,0:21:32.27,Default,,0,0,0,,Vừa hay ta có việc cần làm,
Dialogue: 0,0:21:32.27,0:21:32.96,Default,,0,0,0,,ta đi trước một bước.
Dialogue: 0,0:21:44.92,0:21:45.92,Default,,0,0,0,,Bất Hư chân nhân.
Dialogue: 0,0:21:50.24,0:21:50.92,Default,,0,0,0,,Bàng Nghi Chi.
Dialogue: 0,0:21:54.79,0:21:56.92,Default,,0,0,0,,Ngươi có biết nguyên thần của Diệp Tịch Vụ\Nở đâu không?
Dialogue: 0,0:21:57.48,0:21:58.44,Default,,0,0,0,,Ta phải tìm nàng ấy thế nào?
Dialogue: 0,0:21:59.24,0:22:00.64,Default,,0,0,0,,[Muốn bói toán giải đáp nghi hoặc]
Dialogue: 0,0:22:00.64,0:22:02.00,Default,,0,0,0,,[thì cần thuật pháp Tiên Môn ta mới được.]
Dialogue: 0,0:22:02.00,0:22:02.68,Default,,0,0,0,,Bàng Nghi Chi.
Dialogue: 0,0:22:03.24,0:22:03.92,Default,,0,0,0,,Bàng Nghi Chi.
Dialogue: 0,0:22:07.59,0:22:09.79,Default,,0,0,0,,[Trong Tiên Môn này\Nrốt cuộc có điều huyền diệu gì?]
Dialogue: 0,0:22:11.03,0:22:12.44,Default,,0,0,0,,[Tiêu Lẫm vốn đã chết từ lâu]
Dialogue: 0,0:22:13.11,0:22:15.03,Default,,0,0,0,,[lại có thể sống sờ sờ mà đứng ở đây.]
Dialogue: 0,0:22:15.68,0:22:17.83,Default,,0,0,0,,[Tại sao Bàng Nghi Chi\Nlại truyền tin để Triệu Du cứu ta?]
Dialogue: 0,0:22:20.68,0:22:21.44,Default,,0,0,0,,Tiểu tử.
Dialogue: 0,0:22:22.07,0:22:24.92,Default,,0,0,0,,Không phải ban nãy\Nngươi lòng như lửa đốt đòi rời khỏi ư?
Dialogue: 0,0:22:26.44,0:22:27.68,Default,,0,0,0,,Sao đến lúc này
Dialogue: 0,0:22:28.55,0:22:29.31,Default,,0,0,0,,vẫn còn chưa đi?
Dialogue: 0,0:22:31.24,0:22:33.48,Default,,0,0,0,,Có phải tại Tiêu Dao Tông của ta\Nlớn quá nên lạc đường rồi không?
Dialogue: 0,0:22:34.20,0:22:36.35,Default,,0,0,0,,Cần ta đích thân\Ntiễn ngươi một đoạn không?
Dialogue: 0,0:22:40.72,0:22:42.64,Default,,0,0,0,,Vừa rồi nghe nói quý phái\Ncó thuật pháp Vân Đoan,
Dialogue: 0,0:22:42.92,0:22:43.51,Default,,0,0,0,,ta tới để xem bói.
Dialogue: 0,0:22:46.20,0:22:48.20,Default,,0,0,0,,Ngươi có việc cần đến\NVân Đoan của Bất Hư chân nhân à?
Dialogue: 0,0:22:49.24,0:22:50.24,Default,,0,0,0,,Nhưng mà,
Dialogue: 0,0:22:50.68,0:22:52.59,Default,,0,0,0,,muốn mời ngài hiện thân giải đáp thắc mắc
Dialogue: 0,0:22:52.72,0:22:54.51,Default,,0,0,0,,thì trước tiên cần\Ngia nhập Tiên Môn của ta,
Dialogue: 0,0:22:54.51,0:22:55.68,Default,,0,0,0,,lĩnh ngộ tâm pháp
Dialogue: 0,0:22:56.03,0:22:58.11,Default,,0,0,0,,mới có thể dùng linh lực\Nđể triệu hoán ngài.
Dialogue: 0,0:22:59.00,0:23:00.44,Default,,0,0,0,,[Nếu Tiêu Lẫm ở đây,]
Dialogue: 0,0:23:01.07,0:23:02.40,Default,,0,0,0,,[vậy Diệp Tịch Vụ liệu có…]
Dialogue: 0,0:23:03.27,0:23:04.75,Default,,0,0,0,,[Ta phải ở lại điều tra cho rõ.]
Dialogue: 0,0:23:08.55,0:23:09.68,Default,,0,0,0,,Mong chưởng môn chỉ bảo cho.
Dialogue: 0,0:23:11.75,0:23:13.07,Default,,0,0,0,,Tuy ngươi đã bái sư,
Dialogue: 0,0:23:13.07,0:23:14.64,Default,,0,0,0,,nhưng ta đâu có nói\Nlà muốn nhận ngươi làm đồ đệ.
Dialogue: 0,0:23:15.79,0:23:17.51,Default,,0,0,0,,Muốn gia nhập Tiêu Dao Tông chúng ta
Dialogue: 0,0:23:18.16,0:23:19.00,Default,,0,0,0,,đâu có đơn giản như vậy.
Dialogue: 0,0:23:26.11,0:23:26.64,Default,,0,0,0,,Như vậy đi.
Dialogue: 0,0:23:27.68,0:23:28.07,Default,,0,0,0,,Đứng dậy.
Dialogue: 0,0:23:29.83,0:23:30.51,Default,,0,0,0,,Ngươi ấy,
Dialogue: 0,0:23:30.75,0:23:31.96,Default,,0,0,0,,giúp ta đi làm một việc.
Dialogue: 0,0:23:32.40,0:23:33.35,Default,,0,0,0,,Nếu việc thành,
Dialogue: 0,0:23:33.96,0:23:36.59,Default,,0,0,0,,những vật trân quý ngươi nợ ta\Ncoi trả xong,
Dialogue: 0,0:23:36.88,0:23:37.44,Default,,0,0,0,,thế nào?
Dialogue: 0,0:23:38.92,0:23:40.48,Default,,0,0,0,,Còn về việc bái sư…
Dialogue: 0,0:23:41.83,0:23:42.40,Default,,0,0,0,,Kiếm đến.
Dialogue: 0,0:23:45.79,0:23:47.72,Default,,0,0,0,,Thanh kiếm này tên gọi Nam Chi,
Dialogue: 0,0:23:48.31,0:23:49.92,Default,,0,0,0,,được sư phụ ta chế tạo lúc sinh thời.
Dialogue: 0,0:23:50.75,0:23:52.00,Default,,0,0,0,,Nó do hoa mai hóa thành,
Dialogue: 0,0:23:52.44,0:23:53.55,Default,,0,0,0,,xuân tâm sương phách,
Dialogue: 0,0:23:53.72,0:23:54.44,Default,,0,0,0,,không chút tiêu điều.
Dialogue: 0,0:23:54.79,0:23:56.16,Default,,0,0,0,,Dùng lòng nhân từ này ngắm nhìn thế gian,
Dialogue: 0,0:23:56.72,0:23:57.44,Default,,0,0,0,,phá vỡ chấp niệm,
Dialogue: 0,0:23:57.83,0:23:58.59,Default,,0,0,0,,đạt được tiêu dao.
Dialogue: 0,0:24:00.48,0:24:02.83,Default,,0,0,0,,Hôm nay đưa ngươi thanh kiếm này\Nđể kiểm chứng.
Dialogue: 0,0:24:06.96,0:24:09.35,Default,,0,0,0,,Đợi ngày nào đó ngươi có thể\Nkhiến nó thức tỉnh,
Dialogue: 0,0:24:10.00,0:24:11.64,Default,,0,0,0,,thì coi là đã lĩnh ngộ ra,
Dialogue: 0,0:24:12.59,0:24:13.75,Default,,0,0,0,,lúc đó mới có thể tu tập tiên pháp,
Dialogue: 0,0:24:14.44,0:24:15.48,Default,,0,0,0,,nhập môn cầu đạo.
Dialogue: 0,0:24:25.44,0:24:26.11,Default,,0,0,0,,[Tô Tô,]
Dialogue: 0,0:24:26.55,0:24:27.55,Default,,0,0,0,,[con bế quan mười năm,]
Dialogue: 0,0:24:27.96,0:24:29.03,Default,,0,0,0,,[kiếp sinh tử đã qua,]
Dialogue: 0,0:24:29.35,0:24:30.64,Default,,0,0,0,,[con đừng lo nghĩ nhiều nữa,]
Dialogue: 0,0:24:31.20,0:24:32.11,Default,,0,0,0,,[nghỉ ngơi cho khỏe đi.]
Dialogue: 0,0:24:33.20,0:24:35.83,Default,,0,0,0,,[Ta đã rút đi tà cốt\Ntrên người Đàm Đài Tẫn.]
Dialogue: 0,0:24:36.72,0:24:38.00,Default,,0,0,0,,[Số mệnh đã kết thúc.]
Dialogue: 0,0:24:38.48,0:24:41.83,Default,,0,0,0,,[Trên đời này sẽ không còn Ma Thần nữa.]
Dialogue: 0,0:24:43.51,0:24:45.40,Default,,0,0,0,,[Nhưng nếu đây chỉ là một kiếp số,]
Dialogue: 0,0:24:46.31,0:24:47.31,Default,,0,0,0,,[Đàm Đài Tẫn,]
Dialogue: 0,0:24:48.72,0:24:50.92,Default,,0,0,0,,[chàng thật sự chỉ là\Ngiấc mộng hoàng lương của ta thôi sao?]
Dialogue: 0,0:24:52.07,0:24:53.11,Default,,0,0,0,,[Tỉnh mộng]
Dialogue: 0,0:24:54.27,0:24:55.55,Default,,0,0,0,,[mọi thứ đều tan biến.]
Dialogue: 0,0:25:04.55,0:25:05.24,Default,,0,0,0,,Ai ở đó?
Dialogue: 0,0:25:06.03,0:25:06.51,Default,,0,0,0,,Ra đây.
Dialogue: 0,0:25:20.11,0:25:21.07,Default,,0,0,0,,Tiểu sư thúc.
Dialogue: 0,0:25:21.88,0:25:22.72,Default,,0,0,0,,Cô là ai?
Dialogue: 0,0:25:23.24,0:25:23.88,Default,,0,0,0,,Ta…
Dialogue: 0,0:25:24.68,0:25:25.75,Default,,0,0,0,,Ta không phải người xấu.
Dialogue: 0,0:25:26.64,0:25:28.59,Default,,0,0,0,,Ta cũng là đệ tử Hành Dương Tông chúng ta.
Dialogue: 0,0:25:38.03,0:25:38.75,Default,,0,0,0,,Cho nên
Dialogue: 0,0:25:39.20,0:25:40.72,Default,,0,0,0,,cô là đệ tử của Diêu Vi sư tỷ,
Dialogue: 0,0:25:41.16,0:25:42.48,Default,,0,0,0,,trước đây chưa từng gặp ta.
Dialogue: 0,0:25:43.59,0:25:44.92,Default,,0,0,0,,Từ khi gia nhập sư môn đến nay
Dialogue: 0,0:25:45.16,0:25:47.27,Default,,0,0,0,,ta đã được nghe là\NHành Dương Tông chúng ta
Dialogue: 0,0:25:47.48,0:25:49.00,Default,,0,0,0,,có một vị tiểu sư thúc\Nlinh thể thuần khiết.
Dialogue: 0,0:25:49.44,0:25:50.83,Default,,0,0,0,,Nhưng người vẫn luôn bế quan,
Dialogue: 0,0:25:51.16,0:25:52.92,Default,,0,0,0,,chỉ có thể thấy mỗi đám mây sấm sét đó,
Dialogue: 0,0:25:53.07,0:25:54.16,Default,,0,0,0,,khiến ta tò mò chết đi được.
Dialogue: 0,0:25:54.83,0:25:56.40,Default,,0,0,0,,Nhưng ban nãy lúc mới thấy người,
Dialogue: 0,0:25:56.40,0:25:57.48,Default,,0,0,0,,không biết vì sao
Dialogue: 0,0:25:57.51,0:25:59.48,Default,,0,0,0,,ta luôn thấy rất quen thuộc.
Dialogue: 0,0:26:01.96,0:26:02.79,Default,,0,0,0,,Vị sư điệt này
Dialogue: 0,0:26:03.16,0:26:04.16,Default,,0,0,0,,tên là gì vậy?
Dialogue: 0,0:26:04.48,0:26:05.40,Default,,0,0,0,,Ta tên là Nhạc Nhai.
Dialogue: 0,0:26:06.51,0:26:08.11,Default,,0,0,0,,Tiểu sư thúc gọi thẳng tên ta là được.
Dialogue: 0,0:26:08.88,0:26:09.75,Default,,0,0,0,,Hoặc là,
Dialogue: 0,0:26:09.75,0:26:11.03,Default,,0,0,0,,gọi ta Tiểu Nguyệt Nha cũng được.
Dialogue: 0,0:26:14.79,0:26:15.59,Default,,0,0,0,,Cô tên là Nhạc Nhai?
Dialogue: 0,0:26:16.31,0:26:17.40,Default,,0,0,0,,Đúng vậy, tiểu sư thúc.
Dialogue: 0,0:26:17.55,0:26:18.16,Default,,0,0,0,,Có chuyện gì sao?
Dialogue: 0,0:26:20.48,0:26:21.79,Default,,0,0,0,,[Muội tên là Nguyệt Phù Nhai.]
Dialogue: 0,0:26:21.88,0:26:22.48,Default,,0,0,0,,Tỷ tỷ,
Dialogue: 0,0:26:22.55,0:26:23.75,Default,,0,0,0,,là tỷ đã cứu muội,
Dialogue: 0,0:26:23.83,0:26:24.51,Default,,0,0,0,,phải không?
Dialogue: 0,0:26:26.92,0:26:28.24,Default,,0,0,0,,Cô vốn tên là Nguyệt Phù Nhai,
Dialogue: 0,0:26:28.24,0:26:29.24,Default,,0,0,0,,là người tộc Di Nguyệt,
Dialogue: 0,0:26:29.44,0:26:31.07,Default,,0,0,0,,sau này đổi tên thành Nhạc Nhai,
Dialogue: 0,0:26:31.11,0:26:31.75,Default,,0,0,0,,đúng không?
Dialogue: 0,0:26:33.55,0:26:35.44,Default,,0,0,0,,Tiểu sư thúc lợi hại quá!
Dialogue: 0,0:26:35.79,0:26:37.24,Default,,0,0,0,,Sao cái gì cũng tính ra được vậy?
Dialogue: 0,0:26:38.27,0:26:39.00,Default,,0,0,0,,Phù Nhai,
Dialogue: 0,0:26:39.75,0:26:41.20,Default,,0,0,0,,sao cô lại đến Hành Dương Tông?
Dialogue: 0,0:26:43.35,0:26:45.59,Default,,0,0,0,,Có một vị ân nhân tỷ tỷ từng cứu ta,
Dialogue: 0,0:26:45.83,0:26:48.16,Default,,0,0,0,,còn để lại một bức thư\Ncho cha mẹ nuôi của ta,
Dialogue: 0,0:26:48.88,0:26:50.72,Default,,0,0,0,,bảo ta nếu gặp chuyện\Nthì đến Hành Dương Tông.
Dialogue: 0,0:26:50.75,0:26:52.68,Default,,0,0,0,,Sau đó lúc 15, 16 tuổi ta mắc bệnh,
Dialogue: 0,0:26:53.68,0:26:55.00,Default,,0,0,0,,đi đâu cũng không chữa nổi,
Dialogue: 0,0:26:55.40,0:26:56.40,Default,,0,0,0,,sắp chết đến nơi rồi.
Dialogue: 0,0:26:57.27,0:27:00.44,Default,,0,0,0,,Cha mẹ nuôi liền làm theo thư,\Nđưa ta đến Hành Dương Tông.
Dialogue: 0,0:27:02.31,0:27:02.88,Default,,0,0,0,,Phù Nhai,
Dialogue: 0,0:27:04.35,0:27:04.88,Default,,0,0,0,,qua đây.
Dialogue: 0,0:27:09.72,0:27:10.31,Default,,0,0,0,,Phù Nhai,
Dialogue: 0,0:27:11.75,0:27:14.16,Default,,0,0,0,,cô còn nhớ vị ân nhân tỷ tỷ đó
Dialogue: 0,0:27:14.24,0:27:15.24,Default,,0,0,0,,trông như thế nào không?
Dialogue: 0,0:27:16.35,0:27:17.83,Default,,0,0,0,,Ân nhân tỷ tỷ…
Dialogue: 0,0:27:19.00,0:27:21.20,Default,,0,0,0,,Từ nay về sau, tên muội là Nhạc Nhai.
Dialogue: 0,0:27:21.35,0:27:23.96,Default,,0,0,0,,Cái tên Nguyệt Phù Nhai\Nchỉ có thể giữ trong lòng.
Dialogue: 0,0:27:23.96,0:27:24.75,Default,,0,0,0,,Muội đã hiểu chưa?
Dialogue: 0,0:27:27.55,0:27:29.96,Default,,0,0,0,,[Mong là chúng ta còn có ngày gặp lại.]
Dialogue: 0,0:27:33.96,0:27:34.75,Default,,0,0,0,,Người là…
Dialogue: 0,0:27:35.40,0:27:36.55,Default,,0,0,0,,ân nhân tỷ tỷ?
Dialogue: 0,0:27:41.48,0:27:42.59,Default,,0,0,0,,Ân nhân tỷ tỷ.
Dialogue: 0,0:27:46.68,0:27:48.55,Default,,0,0,0,,[Mọi chuyện không phải một giấc mộng ảo.]
Dialogue: 0,0:27:49.64,0:27:51.92,Default,,0,0,0,,[Có những người quanh đi quẩn lại,\Nvẫn có thể gặp lại nhau.]
Dialogue: 0,0:27:52.31,0:27:53.48,Default,,0,0,0,,Ân nhân tỷ tỷ.
Dialogue: 0,0:27:53.96,0:27:55.48,Default,,0,0,0,,[Có những người khắc cốt ghi tâm]
Dialogue: 0,0:27:56.96,0:27:58.27,Default,,0,0,0,,[lại không có duyên gặp lại nữa.]
Dialogue: 0,0:28:05.11,0:28:06.20,Default,,0,0,0,,[Chắc là đây rồi.]
Dialogue: 0,0:28:11.44,0:28:13.40,Default,,0,0,0,,[Trong thôn làng cách núi Bất Chiếu\Nmười dặm về phía Đông]
Dialogue: 0,0:28:14.11,0:28:15.48,Default,,0,0,0,,[có một bà cụ bị mù.]
Dialogue: 0,0:28:15.88,0:28:16.92,Default,,0,0,0,,Chí Nhi à.
Dialogue: 0,0:28:16.92,0:28:20.27,Default,,0,0,0,,[Mười lăm năm nay ngày nào\Nbà ấy cũng đứng ở cổng thôn,]
Dialogue: 0,0:28:20.96,0:28:21.96,Default,,0,0,0,,[bất chấp gió mưa,]
Dialogue: 0,0:28:22.40,0:28:24.75,Default,,0,0,0,,[từ sáng đến đêm để đợi một người.]
Dialogue: 0,0:28:26.07,0:28:26.55,Default,,0,0,0,,Mẹ.
Dialogue: 0,0:28:27.92,0:28:28.88,Default,,0,0,0,,Chí Nhi về rồi đây.
Dialogue: 0,0:28:33.92,0:28:35.31,Default,,0,0,0,,Chí Nhi của ta.
Dialogue: 0,0:28:36.11,0:28:37.51,Default,,0,0,0,,Ta không nghe lầm chứ?
Dialogue: 0,0:28:37.64,0:28:38.44,Default,,0,0,0,,Chí Nhi.
Dialogue: 0,0:28:39.16,0:28:40.75,Default,,0,0,0,,Con về rồi ư?
Dialogue: 0,0:28:49.16,0:28:50.03,Default,,0,0,0,,Chí Nhi.
Dialogue: 0,0:28:51.03,0:28:52.88,Default,,0,0,0,,Con về thật rồi.
Dialogue: 0,0:28:53.59,0:28:55.64,Default,,0,0,0,,[Dương thọ của bà lão chỉ còn bảy ngày.]
Dialogue: 0,0:28:56.51,0:28:57.27,Default,,0,0,0,,Chí Nhi của ta.
Dialogue: 0,0:28:57.27,0:28:58.51,Default,,0,0,0,,[Bà ấy làm việc thiện cả đời,]
Dialogue: 0,0:28:59.40,0:29:01.92,Default,,0,0,0,,[Tiên Môn muốn hoàn thành\Ntâm nguyện của bà ấy vào phút cuối.]
Dialogue: 0,0:29:03.03,0:29:06.35,Default,,0,0,0,,[Tiếc là con trai bà ấy đã mất từ lâu.]
Dialogue: 0,0:29:07.27,0:29:08.07,Default,,0,0,0,,Đúng vậy, mẹ à.
Dialogue: 0,0:29:09.64,0:29:10.48,Default,,0,0,0,,Con về rồi.
Dialogue: 0,0:29:14.51,0:29:15.44,Default,,0,0,0,,Chí Nhi,
Dialogue: 0,0:29:15.75,0:29:17.72,Default,,0,0,0,,về rồi thì đi nghỉ ngơi đã.
Dialogue: 0,0:29:18.07,0:29:19.64,Default,,0,0,0,,Mẹ đi nấu cơm cho con.
Dialogue: 0,0:29:20.27,0:29:21.00,Default,,0,0,0,,Mẹ cẩn thận nhé.
Dialogue: 0,0:29:24.07,0:29:25.88,Default,,0,0,0,,[Nói không chừng\NBàng Nghi Chi biết gì đó.]
Dialogue: 0,0:29:26.59,0:29:27.83,Default,,0,0,0,,[Ta phải ở lại Tiêu Dao Tông.]
Dialogue: 0,0:29:29.88,0:29:31.07,Default,,0,0,0,,[Dù nàng ở đâu,]
Dialogue: 0,0:29:31.92,0:29:33.40,Default,,0,0,0,,[dù mất bao nhiêu thời gian,]
Dialogue: 0,0:29:34.20,0:29:35.64,Default,,0,0,0,,[ta cũng nhất định sẽ tìm ra nàng,]
Dialogue: 0,0:29:36.48,0:29:37.24,Default,,0,0,0,,[Diệp Tịch Vụ.]
Dialogue: 0,0:29:41.24,0:29:41.88,Default,,0,0,0,,Tiểu sư thúc.
Dialogue: 0,0:29:42.55,0:29:43.16,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:29:45.79,0:29:46.68,Default,,0,0,0,,Người có ăn không?
Dialogue: 0,0:29:49.64,0:29:51.59,Default,,0,0,0,,Tiểu sư thúc, người không biết đâu nhỉ,
Dialogue: 0,0:29:52.07,0:29:53.16,Default,,0,0,0,,năm trăm năm nay,
Dialogue: 0,0:29:53.16,0:29:54.48,Default,,0,0,0,,kinh đô nước Cảnh thay đổi nhiều lắm.
Dialogue: 0,0:29:54.79,0:29:56.68,Default,,0,0,0,,Bọn ta thường xuyên xuống núi giải khuây.
Dialogue: 0,0:29:57.75,0:29:59.68,Default,,0,0,0,,Người xem, người xem,\Nbên kia có người kể chuyện kìa.
Dialogue: 0,0:30:00.20,0:30:02.03,Default,,0,0,0,,Tương truyền nghìn năm trước,
Dialogue: 0,0:30:02.03,0:30:03.88,Default,,0,0,0,,Cảnh Thịnh vốn là một thể.
Dialogue: 0,0:30:04.11,0:30:06.88,Default,,0,0,0,,Sau này chia sông mà trị,\Nchinh chiến liên miên.
Dialogue: 0,0:30:07.27,0:30:09.48,Default,,0,0,0,,Một vị quân vương xuất chúng xuất hiện
Dialogue: 0,0:30:09.64,0:30:12.11,Default,,0,0,0,,mới khiến hai nước lại hợp làm một,
Dialogue: 0,0:30:12.16,0:30:14.07,Default,,0,0,0,,mở ra chuỗi ngày hưng thịnh\Nsuốt 500 năm.
Dialogue: 0,0:30:14.68,0:30:15.92,Default,,0,0,0,,Muốn biết chuyện tiếp diễn ra sao
Dialogue: 0,0:30:15.92,0:30:18.48,Default,,0,0,0,,hãy nghe kể vào buổi sau.
Dialogue: 0,0:30:18.51,0:30:19.00,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:30:19.44,0:30:19.92,Default,,0,0,0,,Được.
Dialogue: 0,0:30:20.40,0:30:21.16,Default,,0,0,0,,Xin ông dừng bước.
Dialogue: 0,0:30:21.78,0:30:23.00,Default,,0,0,0,,[Bàn luận cổ kim]
Dialogue: 0,0:30:23.00,0:30:24.24,Default,,0,0,0,,Nếu ông không vội
Dialogue: 0,0:30:24.44,0:30:25.40,Default,,0,0,0,,xin hãy nán lại một lát,
Dialogue: 0,0:30:25.55,0:30:26.88,Default,,0,0,0,,kể cho ta thêm một đoạn được không?
Dialogue: 0,0:30:27.31,0:30:28.72,Default,,0,0,0,,Cô nương muốn nghe gì vậy?
Dialogue: 0,0:30:30.48,0:30:31.59,Default,,0,0,0,,Ông hãy kể về
Dialogue: 0,0:30:31.72,0:30:33.03,Default,,0,0,0,,Đàm Đài Tẫn của nước Cảnh
Dialogue: 0,0:30:33.11,0:30:34.48,Default,,0,0,0,,năm trăm năm trước.
Dialogue: 0,0:30:34.48,0:30:34.96,Default,,0,0,0,,Được.
Dialogue: 0,0:30:35.11,0:30:36.07,Default,,0,0,0,,Mời cô nương ngồi.
Dialogue: 0,0:30:38.24,0:30:39.24,Default,,0,0,0,,Tiểu sư thúc,
Dialogue: 0,0:30:39.55,0:30:40.88,Default,,0,0,0,,Đàm Đài Tẫn là ai vậy?
Dialogue: 0,0:30:43.48,0:30:44.68,Default,,0,0,0,,Hắn là
Dialogue: 0,0:30:46.48,0:30:47.59,Default,,0,0,0,,vua của nước Cảnh.
Dialogue: 0,0:30:49.48,0:30:51.55,Default,,0,0,0,,Chuyện kể rằng 500 năm trước,
Dialogue: 0,0:30:52.00,0:30:53.27,Default,,0,0,0,,nước Cảnh yếu thế,
Dialogue: 0,0:30:53.51,0:30:54.79,Default,,0,0,0,,dân chúng lầm than.
Dialogue: 0,0:30:55.83,0:30:58.16,Default,,0,0,0,,Sau khi đức vua Đàm Đài Tẫn lên ngôi
Dialogue: 0,0:30:58.88,0:31:00.51,Default,,0,0,0,,đã cố gắng xoay chuyển tình thế,
Dialogue: 0,0:31:01.31,0:31:02.88,Default,,0,0,0,,lập công lao một đời,
Dialogue: 0,0:31:03.40,0:31:05.00,Default,,0,0,0,,mở ra thái bình muôn đời.
Dialogue: 0,0:31:05.40,0:31:06.59,Default,,0,0,0,,Nhưng đêm nay,
Dialogue: 0,0:31:06.68,0:31:09.24,Default,,0,0,0,,không kể những chuyện ai cũng biết.
Dialogue: 0,0:31:09.44,0:31:10.68,Default,,0,0,0,,Ta sẽ kể chuyện hiếm ai hay.
Dialogue: 0,0:31:11.75,0:31:12.72,Default,,0,0,0,,Tương truyền rằng,
Dialogue: 0,0:31:12.92,0:31:17.31,Default,,0,0,0,,quân vương Đàm Đài Tẫn có một nữ tử\Nmà ngài đem lòng yêu sâu sắc.
Dialogue: 0,0:31:17.72,0:31:21.11,Default,,0,0,0,,Nữ tử này không được\Nnhắc đến trong sách sử,
Dialogue: 0,0:31:21.88,0:31:23.03,Default,,0,0,0,,không tên không họ,
Dialogue: 0,0:31:23.75,0:31:25.07,Default,,0,0,0,,thậm chí còn không có phong hiệu
Dialogue: 0,0:31:26.07,0:31:29.35,Default,,0,0,0,,nhưng lại được đế vương dành trọn\Nsự sủng ái suốt đời.
Dialogue: 0,0:31:30.92,0:31:31.68,Default,,0,0,0,,Nghe nói,
Dialogue: 0,0:31:31.92,0:31:34.72,Default,,0,0,0,,sau khi quân vương Đàm Đài Tẫn\Nnhắm mắt xuôi tay
Dialogue: 0,0:31:35.64,0:31:37.64,Default,,0,0,0,,đã được chôn cùng nữ tử mình yêu nhất
Dialogue: 0,0:31:38.00,0:31:40.79,Default,,0,0,0,,tại vương lăng Đàm Đài.
Dialogue: 0,0:31:41.48,0:31:43.11,Default,,0,0,0,,Năm trăm năm từ ấy đến nay,
Dialogue: 0,0:31:43.16,0:31:46.20,Default,,0,0,0,,vương thất Đàm Đài đông con nhiều cháu,
Dialogue: 0,0:31:46.48,0:31:48.24,Default,,0,0,0,,nhiều đời đều là minh quân.
Dialogue: 0,0:31:51.68,0:31:53.79,Default,,0,0,0,,[Cuối cùng chàng cũng đã\Nbuông bỏ được quá khứ,]
Dialogue: 0,0:31:55.27,0:31:56.44,Default,,0,0,0,,[đi về phía trước rồi.]
Dialogue: 0,0:31:59.44,0:32:00.24,Default,,0,0,0,,[Đúng là]
Dialogue: 0,0:32:01.24,0:32:03.11,Default,,0,0,0,,[quãng thời gian ở bên ta]
Dialogue: 0,0:32:04.03,0:32:05.20,Default,,0,0,0,,[dù có yêu]
Dialogue: 0,0:32:06.44,0:32:07.55,Default,,0,0,0,,[nhưng cũng có hận.]
Dialogue: 0,0:32:09.44,0:32:11.40,Default,,0,0,0,,[Rốt cuộc cũng chỉ là pháo hoa trong\Nmột khoảnh khắc trên con đường đế vương]
Dialogue: 0,0:32:11.40,0:32:12.48,Default,,0,0,0,,[dài đằng đẵng của chàng,]
Dialogue: 0,0:32:13.72,0:32:15.11,Default,,0,0,0,,[chớp mắt đã tàn,]
Dialogue: 0,0:32:16.92,0:32:18.44,Default,,0,0,0,,[chẳng đáng nhớ nhung.]
Dialogue: 0,0:32:19.83,0:32:21.35,Default,,0,0,0,,[Ta cũng nên hoàn toàn buông bỏ,]
Dialogue: 0,0:32:22.44,0:32:24.40,Default,,0,0,0,,[đi tìm con đường tu tiên\Ncủa bản thân ta.]
Dialogue: 0,0:32:27.07,0:32:27.59,Default,,0,0,0,,Mẹ.
Dialogue: 0,0:32:32.51,0:32:32.96,Default,,0,0,0,,Mẹ.
Dialogue: 0,0:32:35.24,0:32:36.27,Default,,0,0,0,,Trời vừa sáng,
Dialogue: 0,0:32:36.92,0:32:38.11,Default,,0,0,0,,mẹ đứng đây làm gì vậy?
Dialogue: 0,0:32:38.48,0:32:40.48,Default,,0,0,0,,Đã là lúc nào rồi?
Dialogue: 0,0:32:42.00,0:32:42.96,Default,,0,0,0,,Vừa đến giờ Mão.
Dialogue: 0,0:32:43.40,0:32:45.72,Default,,0,0,0,,Không đúng, không đúng.
Dialogue: 0,0:32:46.20,0:32:50.96,Default,,0,0,0,,Ý ta là đến Xuân Phân rồi.
Dialogue: 0,0:32:52.44,0:32:57.40,Default,,0,0,0,,Trước sân có một cây hoa mơ\Nrất quan trọng với ta,
Dialogue: 0,0:32:58.24,0:33:01.00,Default,,0,0,0,,con đi xem hộ ta xem đã nở hoa chưa.
Dialogue: 0,0:33:01.20,0:33:01.88,Default,,0,0,0,,[Này...]
Dialogue: 0,0:33:02.64,0:33:04.07,Default,,0,0,0,,[là đã héo lâu rồi.]
Dialogue: 0,0:33:04.07,0:33:06.40,Default,,0,0,0,,Cái cây này được trồng mười năm rồi.
Dialogue: 0,0:33:07.44,0:33:09.96,Default,,0,0,0,,Năm nào ta cũng trông ngóng nó nở hoa.
Dialogue: 0,0:33:10.72,0:33:15.07,Default,,0,0,0,,Nhưng mười năm nay\Nta chưa từng được toại nguyện.
Dialogue: 0,0:33:15.72,0:33:18.03,Default,,0,0,0,,[Người sống trên đời,\Nchuyện đau khổ nhất là]
Dialogue: 0,0:33:18.83,0:33:21.31,Default,,0,0,0,,[có hồi ức, không thể giải thoát.]
Dialogue: 0,0:33:21.88,0:33:23.92,Default,,0,0,0,,[Như ta bị kẹt ở sông U Minh,]
Dialogue: 0,0:33:24.88,0:33:26.83,Default,,0,0,0,,[ngày ngày bị Nhược Thủy bào mòn,]
Dialogue: 0,0:33:27.24,0:33:28.48,Default,,0,0,0,,[đau thấu tâm can.]
Dialogue: 0,0:33:31.24,0:33:32.68,Default,,0,0,0,,[Muốn giúp bà cụ toại nguyện]
Dialogue: 0,0:33:33.31,0:33:36.07,Default,,0,0,0,,[thì phải nghĩ cách giúp bà ấy\Ngiải thoát khỏi quá khứ.]
Dialogue: 0,0:34:03.20,0:34:03.83,Default,,0,0,0,,Đẹp lắm.
Dialogue: 0,0:34:06.48,0:34:07.00,Default,,0,0,0,,Mẹ.
Dialogue: 0,0:34:25.48,0:34:26.19,Default,,0,0,0,,Hôm nay
Dialogue: 0,0:34:26.67,0:34:28.63,Default,,0,0,0,,là ngày cuối cùng trong\Ndương thọ của bà cụ rồi.
Dialogue: 0,0:34:29.71,0:34:30.67,Default,,0,0,0,,Dù thế nào
Dialogue: 0,0:34:31.84,0:34:33.32,Default,,0,0,0,,ta cũng phải giúp bà cụ toại nguyện.
Dialogue: 0,0:34:44.55,0:34:45.67,Default,,0,0,0,,[Chí Nhi.]
Dialogue: 0,0:34:55.28,0:34:56.36,Default,,0,0,0,,Con trai ngoan.
Dialogue: 0,0:34:56.80,0:34:57.84,Default,,0,0,0,,Con lại đây.
Dialogue: 0,0:34:58.40,0:35:00.23,Default,,0,0,0,,Mẹ có chuyện muốn nói với con.
Dialogue: 0,0:35:00.51,0:35:01.23,Default,,0,0,0,,Sao vậy mẹ?
Dialogue: 0,0:35:02.51,0:35:03.59,Default,,0,0,0,,Con à,
Dialogue: 0,0:35:04.84,0:35:09.11,Default,,0,0,0,,con nói xem con người sống là vì điều gì?
Dialogue: 0,0:35:12.23,0:35:13.11,Default,,0,0,0,,Con không biết.
Dialogue: 0,0:35:13.63,0:35:17.59,Default,,0,0,0,,Con người sống là vì người bên cạnh mình.
Dialogue: 0,0:35:20.51,0:35:21.28,Default,,0,0,0,,Người bên cạnh ư?
Dialogue: 0,0:35:21.63,0:35:24.03,Default,,0,0,0,,Nếu không phải vì đợi con ta,
Dialogue: 0,0:35:25.03,0:35:27.00,Default,,0,0,0,,ta đã chết từ lâu rồi.
Dialogue: 0,0:35:27.80,0:35:29.40,Default,,0,0,0,,Nếu ta cũng chết
Dialogue: 0,0:35:30.03,0:35:31.67,Default,,0,0,0,,thì còn ai nhớ,
Dialogue: 0,0:35:31.67,0:35:33.40,Default,,0,0,0,,còn ai mong Chí Nhi của ta đây?
Dialogue: 0,0:35:34.67,0:35:35.23,Default,,0,0,0,,Mẹ.
Dialogue: 0,0:35:35.88,0:35:36.19,Default,,0,0,0,,Con…
Dialogue: 0,0:35:37.59,0:35:38.71,Default,,0,0,0,,không phải con đang ở đây sao?
Dialogue: 0,0:35:39.23,0:35:40.92,Default,,0,0,0,,Mắt mẹ mù
Dialogue: 0,0:35:41.15,0:35:42.76,Default,,0,0,0,,nhưng lòng mẹ biết rõ.
Dialogue: 0,0:35:44.11,0:35:45.28,Default,,0,0,0,,Mẹ biết
Dialogue: 0,0:35:46.71,0:35:48.80,Default,,0,0,0,,con không phải Chí Nhi.
Dialogue: 0,0:35:50.19,0:35:52.11,Default,,0,0,0,,Nhưng con là đứa trẻ tốt,
Dialogue: 0,0:35:52.40,0:35:53.84,Default,,0,0,0,,đã ở bên ta đến giây phút cuối cùng.
Dialogue: 0,0:35:54.23,0:35:57.59,Default,,0,0,0,,Bà già này không còn gì nuối tiếc nữa.
Dialogue: 0,0:36:00.67,0:36:02.59,Default,,0,0,0,,Ngược lại là con đấy, con à.
Dialogue: 0,0:36:02.96,0:36:04.40,Default,,0,0,0,,Nhà con ở đâu?
Dialogue: 0,0:36:04.92,0:36:08.71,Default,,0,0,0,,Có còn ai vẫn nhớ mong con không?
Dialogue: 0,0:36:15.92,0:36:16.55,Default,,0,0,0,,Không có.
Dialogue: 0,0:36:18.19,0:36:19.11,Default,,0,0,0,,Con mất mẹ từ nhỏ,
Dialogue: 0,0:36:20.84,0:36:22.07,Default,,0,0,0,,phụ thân hận con thấu xương.
Dialogue: 0,0:36:25.23,0:36:26.28,Default,,0,0,0,,Người mà người bên cạnh con
Dialogue: 0,0:36:27.36,0:36:28.23,Default,,0,0,0,,bận tâm
Dialogue: 0,0:36:29.44,0:36:30.76,Default,,0,0,0,,chưa bao giờ là con.
Dialogue: 0,0:36:31.88,0:36:32.59,Default,,0,0,0,,Nhưng mà
Dialogue: 0,0:36:34.51,0:36:35.71,Default,,0,0,0,,con có một thê tử.
Dialogue: 0,0:36:37.44,0:36:38.44,Default,,0,0,0,,Cô ấy từng bảo vệ con,
Dialogue: 0,0:36:39.80,0:36:40.71,Default,,0,0,0,,từng cứu con.
Dialogue: 0,0:36:41.88,0:36:42.71,Default,,0,0,0,,Cô ấy một lòng
Dialogue: 0,0:36:45.40,0:36:47.03,Default,,0,0,0,,muốn dạy con làm một người tốt.
Dialogue: 0,0:36:48.96,0:36:52.03,Default,,0,0,0,,Vậy nay con đã làm người tốt chưa?
Dialogue: 0,0:37:06.23,0:37:07.76,Default,,0,0,0,,Con… con không biết nữa.
Dialogue: 0,0:37:08.80,0:37:10.03,Default,,0,0,0,,Cô ấy dạy con hướng thiện,
Dialogue: 0,0:37:12.00,0:37:13.03,Default,,0,0,0,,dạy con từ bi,
Dialogue: 0,0:37:14.80,0:37:15.88,Default,,0,0,0,,dạy con yêu người khác.
Dialogue: 0,0:37:18.76,0:37:20.23,Default,,0,0,0,,Nhưng con lại hại chết cô ấy.
Dialogue: 0,0:37:23.51,0:37:27.23,Default,,0,0,0,,Bây giờ đã không còn ai\Ncó thể nói cho con biết
Dialogue: 0,0:37:29.11,0:37:30.84,Default,,0,0,0,,rốt cuộc con là người ra sao.
Dialogue: 0,0:37:31.00,0:37:32.55,Default,,0,0,0,,Nếu làm người xấu
Dialogue: 0,0:37:32.55,0:37:35.23,Default,,0,0,0,,có thể tìm lại thê tử của con,
Dialogue: 0,0:37:35.71,0:37:36.96,Default,,0,0,0,,con có chịu không?
Dialogue: 0,0:37:39.19,0:37:40.11,Default,,0,0,0,,[Bà ấy nói đúng.]
Dialogue: 0,0:37:40.55,0:37:42.03,Default,,0,0,0,,[Nếu ta lợi dụng sức mạnh của Ma Thần]
Dialogue: 0,0:37:42.40,0:37:44.44,Default,,0,0,0,,[không chừng sẽ có cách\Ntìm lại Diệp Tịch Vụ.]
Dialogue: 0,0:37:55.88,0:37:56.55,Default,,0,0,0,,Không.
Dialogue: 0,0:37:58.32,0:37:59.15,Default,,0,0,0,,Làm như vậy
Dialogue: 0,0:37:59.96,0:38:01.19,Default,,0,0,0,,cô ấy sẽ không vui.
Dialogue: 0,0:38:02.44,0:38:04.51,Default,,0,0,0,,Vậy là đúng rồi, con à.
Dialogue: 0,0:38:05.76,0:38:08.67,Default,,0,0,0,,Nếu con thật lòng nhung nhớ thê tử của con
Dialogue: 0,0:38:08.67,0:38:11.48,Default,,0,0,0,,thì nên để con bé được toại nguyện,
Dialogue: 0,0:38:11.80,0:38:12.80,Default,,0,0,0,,con hiểu không?
Dialogue: 0,0:38:13.19,0:38:14.19,Default,,0,0,0,,Toại nguyện là gì?
Dialogue: 0,0:38:15.40,0:38:17.55,Default,,0,0,0,,Con à, con xem.
Dialogue: 0,0:38:17.67,0:38:20.00,Default,,0,0,0,,Con xem có phải cây mơ xung quanh
Dialogue: 0,0:38:20.44,0:38:22.03,Default,,0,0,0,,đã nở hoa rồi không?
Dialogue: 0,0:38:24.19,0:38:27.63,Default,,0,0,0,,Cái cây này vốn là Chí Nhi\Ntrồng trước khi đi.
Dialogue: 0,0:38:28.00,0:38:29.80,Default,,0,0,0,,Nó nói, mẹ à,
Dialogue: 0,0:38:30.48,0:38:32.63,Default,,0,0,0,,bao giờ cây mơ nở hoa
Dialogue: 0,0:38:33.03,0:38:34.63,Default,,0,0,0,,con sẽ về.
Dialogue: 0,0:38:35.03,0:38:37.32,Default,,0,0,0,,Ta thường tưới nước cho nó,
Dialogue: 0,0:38:38.80,0:38:41.76,Default,,0,0,0,,mong một ngày nào đó
Dialogue: 0,0:38:42.84,0:38:44.80,Default,,0,0,0,,Chí Nhi trở về
Dialogue: 0,0:38:45.88,0:38:47.76,Default,,0,0,0,,cây mơ vẫn còn đó,
Dialogue: 0,0:38:49.07,0:38:50.80,Default,,0,0,0,,Chí Nhi sẽ không phải
Dialogue: 0,0:38:51.55,0:38:55.11,Default,,0,0,0,,đau buồn vì ta già yếu.
Dialogue: 0,0:38:59.63,0:39:00.84,Default,,0,0,0,,Thì ra là vậy.
Dialogue: 0,0:39:02.28,0:39:03.19,Default,,0,0,0,,Hình như con…
Dialogue: 0,0:39:05.36,0:39:06.55,Default,,0,0,0,,Hình như con hiểu rồi.
Dialogue: 0,0:39:10.15,0:39:12.88,Default,,0,0,0,,[Con trai bà cụ\Nlà quá khứ giữ chân bà ấy.]
Dialogue: 0,0:39:13.67,0:39:16.40,Default,,0,0,0,,[Mà gốc mai này chính là chìa để mở khóa.]
Dialogue: 0,0:39:17.15,0:39:19.55,Default,,0,0,0,,[Chỉ cần khiến bà cụ\Ntưởng là cây mai nở hoa,]
Dialogue: 0,0:39:19.92,0:39:21.67,Default,,0,0,0,,[con trai đã về là sẽ không buồn bã,]
Dialogue: 0,0:39:22.00,0:39:23.67,Default,,0,0,0,,[hoàn thành\Ntâm nguyện của bà cụ.]
Dialogue: 0,0:39:24.15,0:39:25.55,Default,,0,0,0,,[Thanh kiếm này tên gọi Nam Chi,]
Dialogue: 0,0:39:26.11,0:39:27.32,Default,,0,0,0,,[xuân tâm sương phách,]
Dialogue: 0,0:39:27.67,0:39:28.59,Default,,0,0,0,,[không chút tiêu điều.]
Dialogue: 0,0:39:30.40,0:39:31.88,Default,,0,0,0,,[Lấy pháp thân của Nam Chi làm cành,]
Dialogue: 0,0:39:32.48,0:39:33.80,Default,,0,0,0,,[rót linh lực vào thúc đẩy sinh trưởng,]
Dialogue: 0,0:39:34.76,0:39:36.23,Default,,0,0,0,,[sẽ có thể xóa bỏ chấp niệm,]
Dialogue: 0,0:39:36.48,0:39:37.48,Default,,0,0,0,,[thấy được tiêu dao.]
Dialogue: 0,0:39:39.11,0:39:40.88,Default,,0,0,0,,[Cỏ cây tươi héo có quy luật,]
Dialogue: 0,0:39:41.51,0:39:43.00,Default,,0,0,0,,[Vạn vật thuận theo lẽ tự nhiên.]
Dialogue: 0,0:39:43.71,0:39:44.32,Default,,0,0,0,,[Phá.]
Dialogue: 0,0:39:55.07,0:39:55.63,Default,,0,0,0,,Mẹ.
Dialogue: 0,0:39:58.76,0:39:59.23,Default,,0,0,0,,Mẹ xem này.
Dialogue: 0,0:40:00.03,0:40:00.84,Default,,0,0,0,,Hoa nở rồi.
Dialogue: 0,0:40:01.51,0:40:02.71,Default,,0,0,0,,Con ngắt một cành cho mẹ đây.
Dialogue: 0,0:40:04.96,0:40:05.84,Default,,0,0,0,,Cảm ơn,
Dialogue: 0,0:40:06.76,0:40:08.44,Default,,0,0,0,,con là người tốt.
Dialogue: 0,0:40:20.07,0:40:20.63,Default,,0,0,0,,Mẹ.
Dialogue: 0,0:40:26.28,0:40:27.00,Default,,0,0,0,,[Bà cụ,]
Dialogue: 0,0:40:28.51,0:40:30.32,Default,,0,0,0,,[đời này bà đã có công đức viên mãn,]
Dialogue: 0,0:40:31.67,0:40:35.19,Default,,0,0,0,,[chắc chắn kiếp sau sẽ được hưởng phúc.]
Dialogue: 0,0:40:47.15,0:40:48.03,Default,,0,0,0,,Triệu Du tiền bối,
Dialogue: 0,0:40:48.63,0:40:50.00,Default,,0,0,0,,ta muốn bái tiền bối làm sư phụ,
Dialogue: 0,0:40:50.59,0:40:51.71,Default,,0,0,0,,trở thành đệ tử của Tiêu Dao Tông,
Dialogue: 0,0:40:53.03,0:40:55.15,Default,,0,0,0,,ở lại đây chuyên tâm tu hành.
Dialogue: 0,0:40:57.00,0:40:57.92,Default,,0,0,0,,Được.
Dialogue: 0,0:40:58.44,0:40:59.11,Default,,0,0,0,,Tiểu tử,
Dialogue: 0,0:40:59.19,0:41:01.07,Default,,0,0,0,,ta thấy ngươi cũng có tiên duyên,
Dialogue: 0,0:41:01.40,0:41:02.84,Default,,0,0,0,,biết ngay là ngươi không thể đi được.
Dialogue: 0,0:41:03.55,0:41:05.40,Default,,0,0,0,,Nếu ngươi đã đến từ sông U Minh
Dialogue: 0,0:41:05.40,0:41:06.80,Default,,0,0,0,,thì cũng coi như chết đi sống lại,
Dialogue: 0,0:41:07.03,0:41:08.92,Default,,0,0,0,,giờ đây lại muốn vào Tiên Môn của ta,
Dialogue: 0,0:41:09.40,0:41:11.71,Default,,0,0,0,,hay là ta đặt cho ngươi\Nmột cái tên mới, thế nào?
Dialogue: 0,0:41:13.19,0:41:14.76,Default,,0,0,0,,Trước khi tu tiên, ta họ Thương,
Dialogue: 0,0:41:15.11,0:41:17.28,Default,,0,0,0,,chi bằng ta chiếm hời của ngươi,
Dialogue: 0,0:41:17.32,0:41:18.71,Default,,0,0,0,,theo họ Thương của ta đi.
Dialogue: 0,0:41:19.11,0:41:20.84,Default,,0,0,0,,Lấy hai chữ Cửu Mân làm tên,
Dialogue: 0,0:41:20.96,0:41:21.71,Default,,0,0,0,,thế nào?
Dialogue: 0,0:41:24.88,0:41:25.80,Default,,0,0,0,,Tại sao lại là Cửu Mân?
Dialogue: 0,0:41:27.11,0:41:28.55,Default,,0,0,0,,Thời cơ chưa đến,
Dialogue: 0,0:41:28.84,0:41:30.28,Default,,0,0,0,,không thể tiết lộ.
Dialogue: 0,0:41:32.00,0:41:33.40,Default,,0,0,0,,Ngươi có thích
Dialogue: 0,0:41:34.00,0:41:34.80,Default,,0,0,0,,hai chữ Cửu Mân này không?
Dialogue: 0,0:41:37.96,0:41:38.71,Default,,0,0,0,,Đa tạ tiền bối.
Dialogue: 0,0:41:38.96,0:41:39.92,Default,,0,0,0,,Vẫn gọi tiền bối ư?
Dialogue: 0,0:41:47.44,0:41:48.36,Default,,0,0,0,,Đa tạ sư phụ.
Dialogue: 0,0:41:48.67,0:41:49.48,Default,,0,0,0,,Tốt lắm.
Dialogue: 0,0:41:50.28,0:41:51.32,Default,,0,0,0,,Đồ đệ ngoan.
Dialogue: 0,0:41:59.28,0:42:00.32,Default,,0,0,0,,Chuyện của bà cụ
Dialogue: 0,0:42:00.32,0:42:01.28,Default,,0,0,0,,đã chấm dứt,
Dialogue: 0,0:42:01.55,0:42:02.55,Default,,0,0,0,,thanh kiếm này
Dialogue: 0,0:42:02.88,0:42:03.92,Default,,0,0,0,,xin trả lại cho sư phụ.
Dialogue: 0,0:42:04.44,0:42:05.36,Default,,0,0,0,,Con vừa học đạo,
Dialogue: 0,0:42:05.63,0:42:06.76,Default,,0,0,0,,không dùng đến vũ khí lợi hại như này.
Dialogue: 0,0:42:07.00,0:42:07.67,Default,,0,0,0,,Cửu Mân,
Dialogue: 0,0:42:08.11,0:42:09.19,Default,,0,0,0,,con đang lo lắng điều gì?
Dialogue: 0,0:42:13.48,0:42:14.48,Default,,0,0,0,,Thanh kiếm này
Dialogue: 0,0:42:15.11,0:42:15.84,Default,,0,0,0,,được con đánh thức,
Dialogue: 0,0:42:16.71,0:42:17.71,Default,,0,0,0,,nếu đã đánh thức nó
Dialogue: 0,0:42:17.80,0:42:19.11,Default,,0,0,0,,thì thanh kiếm này là của con,
Dialogue: 0,0:42:19.76,0:42:20.92,Default,,0,0,0,,con tự giữ lấy đi.
Dialogue: 0,0:42:24.88,0:42:25.44,Default,,0,0,0,,Nào,
Dialogue: 0,0:42:25.48,0:42:27.71,Default,,0,0,0,,để ta đưa con đi tham quan Tiêu Dao Tông.
Dialogue: 0,0:42:45.88,0:42:46.48,Default,,0,0,0,,Cửu Mân,
Dialogue: 0,0:42:46.96,0:42:48.71,Default,,0,0,0,,núi Bất Chiếu của chúng ta\Ncó sáu đỉnh núi,
Dialogue: 0,0:42:50.67,0:42:52.48,Default,,0,0,0,,đỉnh ở trung tâm núi Bất Chiếu
Dialogue: 0,0:42:53.07,0:42:54.36,Default,,0,0,0,,tên là đỉnh Hương Lô,
Dialogue: 0,0:42:54.63,0:42:56.71,Default,,0,0,0,,là ngọn cao nhất trong sáu đỉnh núi.
Dialogue: 0,0:42:57.03,0:42:58.88,Default,,0,0,0,,Khi xưa pháp khí Ma tộc rơi xuống
Dialogue: 0,0:42:59.03,0:42:59.92,Default,,0,0,0,,khiến núi sập đất nứt,
Dialogue: 0,0:43:00.28,0:43:01.36,Default,,0,0,0,,núi Bất Chiếu mới ra đời.
Dialogue: 0,0:43:01.59,0:43:02.84,Default,,0,0,0,,Quần thể núi bao quanh,
Dialogue: 0,0:43:03.00,0:43:04.11,Default,,0,0,0,,sáu đỉnh đứng độc lập,
Dialogue: 0,0:43:04.44,0:43:05.71,Default,,0,0,0,,bầu trời tựa một mái vòm cực lớn,
Dialogue: 0,0:43:06.11,0:43:08.40,Default,,0,0,0,,vừa khéo là một trận pháp trời sinh.
Dialogue: 0,0:43:08.88,0:43:10.00,Default,,0,0,0,,Mà Tiêu Dao Tông chúng ta
Dialogue: 0,0:43:10.71,0:43:11.80,Default,,0,0,0,,ngụ tại đó,
Dialogue: 0,0:43:12.00,0:43:14.28,Default,,0,0,0,,nên có thể dùng trời đất làm lò nung,
Dialogue: 0,0:43:14.55,0:43:15.48,Default,,0,0,0,,luyện hóa vạn vật.
Dialogue: 0,0:43:17.84,0:43:19.00,Default,,0,0,0,,Bãi bể nương dâu,
Dialogue: 0,0:43:19.88,0:43:21.80,Default,,0,0,0,,nơi năm ấy bị ma khí vấy bẩn
Dialogue: 0,0:43:22.19,0:43:22.92,Default,,0,0,0,,giờ đây
Dialogue: 0,0:43:23.55,0:43:25.15,Default,,0,0,0,,lại trở thành Tiên Môn động phủ.
Dialogue: 0,0:43:26.36,0:43:27.84,Default,,0,0,0,,Nghe theo con tim,
Dialogue: 0,0:43:28.23,0:43:29.51,Default,,0,0,0,,có thể làm bất cứ điều gì,
Dialogue: 0,0:43:29.51,0:43:30.55,Default,,0,0,0,,có thể đi về bất cứ đâu,
Dialogue: 0,0:43:31.40,0:43:32.59,Default,,0,0,0,,ấy là tiêu dao.
Dialogue: 0,0:43:33.32,0:43:33.96,Default,,0,0,0,,Từ đó
Dialogue: 0,0:43:34.23,0:43:36.76,Default,,0,0,0,,Tiêu Dao Tông chúng ta\Ncũng sáng tạo ra một bộ kiếm pháp riêng
Dialogue: 0,0:43:37.76,0:43:39.03,Default,,0,0,0,,và đặt tên cho nó là
Dialogue: 0,0:43:39.32,0:43:40.67,Default,,0,0,0,,Tiêu Dao Kiếm Ý.
Dialogue: 0,0:43:43.00,0:43:44.11,Default,,0,0,0,,Kiếm động theo tâm,
Dialogue: 0,0:43:44.59,0:43:45.88,Default,,0,0,0,,muôn vàn biến hóa.
Dialogue: 0,0:43:46.32,0:43:49.19,Default,,0,0,0,,Nếu con đã phá được\Nphong ấn của kiếm Nam Chi
Dialogue: 0,0:43:49.48,0:43:50.32,Default,,0,0,0,,thì ta
Dialogue: 0,0:43:50.51,0:43:52.44,Default,,0,0,0,,sẽ truyền luôn Tiêu Dao Kiếm Ý cho con.
Dialogue: 0,0:43:53.03,0:43:53.96,Default,,0,0,0,,Nhưng con phải nhớ rằng
Dialogue: 0,0:43:54.28,0:43:55.32,Default,,0,0,0,,kiếm pháp tùy tâm,
Dialogue: 0,0:43:55.96,0:43:57.32,Default,,0,0,0,,nếu muốn tu luyện được kiếm pháp
Dialogue: 0,0:43:57.59,0:43:58.67,Default,,0,0,0,,thì phải luyện nơi này.
Dialogue: 0,0:44:04.84,0:44:08.11,Default,,0,0,0,,[Ấn Tẩy Tủy là trái tim của Ma Thần.]
Dialogue: 0,0:44:23.59,0:44:24.40,Default,,0,0,0,,[Diệp Tịch Vụ.]
Dialogue: 0,0:44:24.92,0:44:25.76,Default,,0,0,0,,[Đẹp không?]
Dialogue: 0,0:44:29.67,0:44:31.36,Default,,0,0,0,,[Chỉ khi quên đi Đàm Đài Tẫn]
Dialogue: 0,0:44:32.32,0:44:33.80,Default,,0,0,0,,[thì công lực mới có thể mạnh hơn.]
Dialogue: 0,0:44:38.28,0:44:39.03,Default,,0,0,0,,[Lê Tô Tô,]
Dialogue: 0,0:44:39.44,0:44:40.48,Default,,0,0,0,,[tập trung vào.]
Dialogue: 0,0:44:46.15,0:44:47.40,Default,,0,0,0,,[Tiếp tục như vậy không được đâu.]
Dialogue: 0,0:44:48.71,0:44:50.15,Default,,0,0,0,,[Người ta thích là nàng,]
Dialogue: 0,0:44:50.59,0:44:52.23,Default,,0,0,0,,[không phải bất cứ ai khác.]
Dialogue: 0,0:45:09.59,0:45:10.76,Default,,0,0,0,,[Diệp Tịch Vụ,]
Dialogue: 0,0:45:11.63,0:45:13.36,Default,,0,0,0,,[ngay cả nàng cũng muốn bỏ rơi ta ư?]
Dialogue: 0,0:45:21.11,0:45:22.71,Default,,0,0,0,,[Khi ta muốn quên Đàm Đài Tẫn]
Dialogue: 0,0:45:24.11,0:45:25.44,Default,,0,0,0,,[thì có một khoảnh khắc]
Dialogue: 0,0:45:25.55,0:45:27.07,Default,,0,0,0,,[dường như công lực đã mạnh lên.]
Dialogue: 0,0:45:29.11,0:45:30.76,Default,,0,0,0,,[Ta cũng nên hoàn toàn buông bỏ,]
Dialogue: 0,0:45:31.67,0:45:33.51,Default,,0,0,0,,[đi tìm con đường tu tiên\Ncủa bản thân ta.]
Dialogue: 0,0:45:37.92,0:45:39.51,Default,,0,0,0,,[Chẳng lẽ đây chính là đạo Vô Tình?]
Dialogue: 0,0:45:41.23,0:45:42.88,Default,,0,0,0,,[Nếu không nhanh chóng thuận theo,]
Dialogue: 0,0:45:43.07,0:45:44.07,Default,,0,0,0,,[chuyển sang tu luyện đạo Vô Tình,]
Dialogue: 0,0:45:44.55,0:45:46.36,Default,,0,0,0,,[e rằng đến khi tu vi của ta cạn hết]
Dialogue: 0,0:45:46.71,0:45:48.55,Default,,0,0,0,,[thì sức mạnh của Thiên Trì\Ncũng không thể phong ấn tà cốt.]
Dialogue: 0,0:45:57.51,0:45:59.11,Default,,0,0,0,,[Đàm Đài Tẫn đã là minh quân,]
Dialogue: 0,0:45:59.11,0:46:00.36,Default,,0,0,0,,[sống hết một đời của chàng,]
Dialogue: 0,0:46:01.00,0:46:01.88,Default,,0,0,0,,[ta cũng không nên]
Dialogue: 0,0:46:01.88,0:46:03.88,Default,,0,0,0,,[mãi mãi nhốt mình\Ntrong hồi ức của quá khứ,]
Dialogue: 0,0:46:04.03,0:46:05.36,Default,,0,0,0,,[ngày ngày chịu đựng sự giày vò nữa.]
Dialogue: 0,0:46:08.48,0:46:09.67,Default,,0,0,0,,[Thì ra đây chính là Tiên Môn.]
Dialogue: 0,0:46:10.80,0:46:12.00,Default,,0,0,0,,[Đây chính là nơi]
Dialogue: 0,0:46:12.00,0:46:13.63,Default,,0,0,0,,[Diệp Tịch Vụ nàng từng sống.]
Dialogue: 0,0:46:15.28,0:46:16.15,Default,,0,0,0,,[Diệp Tịch Vụ,]
Dialogue: 0,0:46:17.32,0:46:18.51,Default,,0,0,0,,[nếu 500 năm trước]
Dialogue: 0,0:46:18.51,0:46:20.63,Default,,0,0,0,,[ta cảm nhận được những điều này\Nthì tốt biết mấy.]
Dialogue: 0,0:46:21.67,0:46:22.19,Default,,0,0,0,,Tiểu sư đệ.
Dialogue: 0,0:46:23.28,0:46:23.92,Default,,0,0,0,,Tiểu sư đệ.
Dialogue: 0,0:46:24.23,0:46:25.44,Default,,0,0,0,,Lần trước đệ đi vội vàng quá,
Dialogue: 0,0:46:25.44,0:46:26.40,Default,,0,0,0,,chưa kịp giới thiệu.
Dialogue: 0,0:46:28.63,0:46:29.55,Default,,0,0,0,,Ta là Tàng Hải,
Dialogue: 0,0:46:29.63,0:46:30.80,Default,,0,0,0,,nếu đệ thấy có gì bất tiện
Dialogue: 0,0:46:30.88,0:46:31.84,Default,,0,0,0,,thì cứ đến tìm ta là được.
Dialogue: 0,0:46:32.88,0:46:33.76,Default,,0,0,0,,Đa tạ sư huynh.
Dialogue: 0,0:46:34.44,0:46:35.51,Default,,0,0,0,,Đây là Tàng Phong.
Dialogue: 0,0:46:37.55,0:46:38.51,Default,,0,0,0,,Tiểu sư đệ,
Dialogue: 0,0:46:38.55,0:46:39.48,Default,,0,0,0,,đệ vừa mới đến,
Dialogue: 0,0:46:39.67,0:46:41.07,Default,,0,0,0,,để sư huynh chỉ bảo cho đệ.
Dialogue: 0,0:46:41.40,0:46:42.44,Default,,0,0,0,,Trong những đệ tử của sư phụ chúng ta
Dialogue: 0,0:46:42.44,0:46:43.11,Default,,0,0,0,,thì Tàng Hải xếp thứ hai,
Dialogue: 0,0:46:43.15,0:46:44.11,Default,,0,0,0,,ta xếp thứ ba.
Dialogue: 0,0:46:44.11,0:46:45.03,Default,,0,0,0,,Sư đệ thì sao?
Dialogue: 0,0:46:45.55,0:46:46.88,Default,,0,0,0,,Hễ đã bái sư nhập môn
Dialogue: 0,0:46:46.88,0:46:48.32,Default,,0,0,0,,thì sư phụ đều sẽ đặt cho một cái tên mới.
Dialogue: 0,0:46:48.32,0:46:49.23,Default,,0,0,0,,Đệ tên là Tàng gì?
Dialogue: 0,0:46:51.15,0:46:52.15,Default,,0,0,0,,Thương Cửu Mân.
Dialogue: 0,0:46:53.28,0:46:54.96,Default,,0,0,0,,Thế thì vai vế khác chúng ta rồi.
Dialogue: 0,0:46:55.32,0:46:56.88,Default,,0,0,0,,Thương là họ của sư phụ trước khi tu tiên,
Dialogue: 0,0:46:57.03,0:46:58.88,Default,,0,0,0,,chẳng lẽ đệ là thân thích của người?
Dialogue: 0,0:47:01.00,0:47:03.32,Default,,0,0,0,,Trước đây, ta và chưởng môn\Nkhông hề quen biết.
Dialogue: 0,0:47:04.15,0:47:05.67,Default,,0,0,0,,Sư phụ đổi tên\Nđương nhiên sẽ có lý lẽ của người,
Dialogue: 0,0:47:05.80,0:47:06.88,Default,,0,0,0,,chúng ta đừng đoán bậy nữa.
Dialogue: 0,0:47:07.84,0:47:08.71,Default,,0,0,0,,À đúng rồi, sư đệ này,
Dialogue: 0,0:47:08.84,0:47:10.76,Default,,0,0,0,,vẫn chưa giới thiệu với đệ\Nvề đại sư huynh của phái ta.
Dialogue: 0,0:47:12.88,0:47:13.92,Default,,0,0,0,,Nói đến đại sư huynh này,
Dialogue: 0,0:47:14.03,0:47:14.80,Default,,0,0,0,,huynh ấy tên là Tàng Lâm,
Dialogue: 0,0:47:15.00,0:47:16.07,Default,,0,0,0,,là một người say mê võ học,
Dialogue: 0,0:47:16.92,0:47:18.36,Default,,0,0,0,,nơi này không được linh hoạt cho lắm.
Dialogue: 0,0:47:18.92,0:47:19.80,Default,,0,0,0,,Không được linh hoạt?
Dialogue: 0,0:47:21.96,0:47:22.71,Default,,0,0,0,,Đại sư huynh.
Dialogue: 0,0:47:27.15,0:47:28.76,Default,,0,0,0,,Thật ra đại sư huynh
Dialogue: 0,0:47:28.92,0:47:31.40,Default,,0,0,0,,chỉ là say mê tu luyện thuật pháp,
Dialogue: 0,0:47:31.71,0:47:33.11,Default,,0,0,0,,chịu khó và chăm chỉ hơn người khác thôi.
Dialogue: 0,0:47:33.44,0:47:34.19,Default,,0,0,0,,Đúng…
Dialogue: 0,0:47:40.71,0:47:42.96,Default,,0,0,0,,Đệ là đệ tử sư phụ mới nhận à?
Dialogue: 0,0:47:44.44,0:47:45.51,Default,,0,0,0,,Có muốn thử vài chiêu không?
Dialogue: 0,0:47:45.59,0:47:46.63,Default,,0,0,0,,Chắc chắn đệ có chỗ nào hơn người,
Dialogue: 0,0:47:46.92,0:47:47.48,Default,,0,0,0,,để ta xem thử.
Dialogue: 0,0:47:48.28,0:47:49.36,Default,,0,0,0,,- Được rồi…\N- Cửu Mân sư đệ,
Dialogue: 0,0:47:49.36,0:47:50.80,Default,,0,0,0,,đệ đang bị thương, nghỉ ngơi sớm nhé,
Dialogue: 0,0:47:50.80,0:47:51.59,Default,,0,0,0,,bọn ta đi trước đây.
Dialogue: 0,0:47:51.59,0:47:52.51,Default,,0,0,0,,Đúng… Đại sư huynh.
Dialogue: 0,0:47:52.51,0:47:53.71,Default,,0,0,0,,Lần sau chắc chắn phải so tài đấy.
Dialogue: 0,0:47:54.55,0:47:55.63,Default,,0,0,0,,Lần sau so tài đấy.
Dialogue: 0,0:47:56.44,0:47:56.92,Default,,0,0,0,,Tiểu sư đệ,
Dialogue: 0,0:47:57.15,0:47:58.67,Default,,0,0,0,,cuộc so tài\Ngiữa các Tiên Môn rất quan trọng,
Dialogue: 0,0:47:58.88,0:48:00.51,Default,,0,0,0,,đừng quên tập luyện kiếm pháp đấy.
Dialogue: 0,0:48:50.76,0:48:53.32,Default,,0,0,0,,[Tiên tủy này đang giúp ta tu hành.]
Dialogue: 0,0:48:58.23,0:48:59.19,Default,,0,0,0,,[Diệp Tịch Vụ.]
Dialogue: 0,0:49:23.92,0:49:24.84,Default,,0,0,0,,Triệu Du bá bá,
Dialogue: 0,0:49:25.07,0:49:25.88,Default,,0,0,0,,người sao vậy?
Dialogue: 0,0:49:26.76,0:49:28.07,Default,,0,0,0,,Ta ấy à,
Dialogue: 0,0:49:28.40,0:49:30.63,Default,,0,0,0,,vừa thấy có người\Ntrưng ra bộ mặt già lạnh như băng,
Dialogue: 0,0:49:30.63,0:49:31.63,Default,,0,0,0,,cố tỏ vẻ sâu sắc
Dialogue: 0,0:49:31.63,0:49:33.00,Default,,0,0,0,,là phải uống ít rượu ngay,
Dialogue: 0,0:49:33.51,0:49:36.00,Default,,0,0,0,,không thì sẽ thấy toàn thân\Nkhông thoải mái, mí mắt còn bị giật nữa.
Dialogue: 0,0:49:36.00,0:49:37.07,Default,,0,0,0,,Hồ lô đựng rượu của người đâu?
Dialogue: 0,0:49:37.19,0:49:38.59,Default,,0,0,0,,Để con đi lấy cho người một hũ.
Dialogue: 0,0:49:39.88,0:49:40.48,Default,,0,0,0,,Không cần đâu,
Dialogue: 0,0:49:40.84,0:49:42.19,Default,,0,0,0,,sau này việc nhỏ như lấy rượu
Dialogue: 0,0:49:42.32,0:49:44.67,Default,,0,0,0,,cứ giao cho đồ đệ ngoan\Nta mới nhận đi làm là được.
Dialogue: 0,0:49:45.76,0:49:47.84,Default,,0,0,0,,Nhưng ta thấy con ngoan thế này,
Dialogue: 0,0:49:48.96,0:49:50.28,Default,,0,0,0,,để ta tặng cho con một thứ.
Dialogue: 0,0:49:51.55,0:49:53.07,Default,,0,0,0,,Để ta xem bói nhân duyên cho con.
Dialogue: 0,0:49:55.96,0:49:56.96,Default,,0,0,0,,Đừng quậy nữa.
Dialogue: 0,0:49:57.59,0:50:00.32,Default,,0,0,0,,Tô Tô đã quyết định tu luyện đạo Vô Tình.
Dialogue: 0,0:50:02.59,0:50:03.44,Default,,0,0,0,,Tô Tô.
Dialogue: 0,0:50:03.92,0:50:05.40,Default,,0,0,0,,Đạo Vô Tình không phải trò đùa,
Dialogue: 0,0:50:05.40,0:50:08.11,Default,,0,0,0,,con đã nghiêm túc cân nhắc
Dialogue: 0,0:50:08.84,0:50:10.32,Default,,0,0,0,,những mặt lợi, hại,\Nđược, mất trong đó chưa?
Dialogue: 0,0:50:12.51,0:50:15.07,Default,,0,0,0,,Tuy mười năm nay Tô Tô lịch kiếp,
Dialogue: 0,0:50:15.44,0:50:16.63,Default,,0,0,0,,nhưng lại giống niết bàn hơn.
Dialogue: 0,0:50:17.15,0:50:18.55,Default,,0,0,0,,Bây giờ trong cơ thể của Tô Tô,
Dialogue: 0,0:50:19.00,0:50:20.51,Default,,0,0,0,,mọi thứ đều đã được tái tạo lại.
Dialogue: 0,0:50:20.92,0:50:23.15,Default,,0,0,0,,Hành Dương Tông mấy người\Nnhiều chuyện quái lạ thật đấy.
Dialogue: 0,0:50:23.15,0:50:26.55,Default,,0,0,0,,Vốn dĩ Tô Tô còn nhỏ, chưa biết yêu là gì,
Dialogue: 0,0:50:27.00,0:50:28.19,Default,,0,0,0,,chưa từng trải qua tình kiếp,
Dialogue: 0,0:50:28.63,0:50:30.80,Default,,0,0,0,,sao lại chuyển sang tu đạo Vô Tình chứ?
Dialogue: 0,0:50:32.40,0:50:33.11,Default,,0,0,0,,[Xem ra]
Dialogue: 0,0:50:33.48,0:50:35.71,Default,,0,0,0,,[Đàm Đài Tẫn chính là tình kiếp của ta.]
Dialogue: 0,0:50:40.51,0:50:43.55,Default,,0,0,0,,Cha và Triệu Du bá bá\Nkhông cần thấy khó thay cho Tô Tô đâu.
Dialogue: 0,0:50:44.71,0:50:47.59,Default,,0,0,0,,Con đã tỏ rõ quyết tâm với cha
Dialogue: 0,0:50:47.88,0:50:49.76,Default,,0,0,0,,thì nay cũng không cần chần chừ thêm nữa.
Dialogue: 0,0:50:54.96,0:50:55.40,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:50:55.59,0:50:56.59,Default,,0,0,0,,con về trước đi.
Dialogue: 0,0:51:06.84,0:51:07.59,Default,,0,0,0,,[Lạ thật,]
Dialogue: 0,0:51:08.00,0:51:09.11,Default,,0,0,0,,[mấy lời ấy của Tô Tô]
Dialogue: 0,0:51:09.15,0:51:11.19,Default,,0,0,0,,[không giống lời nói bâng quơ của nữ tử.]
Dialogue: 0,0:51:12.11,0:51:12.67,Default,,0,0,0,,Tô Tô.
Dialogue: 0,0:51:15.03,0:51:16.00,Default,,0,0,0,,Công Dã sư huynh.
Dialogue: 0,0:51:17.03,0:51:17.80,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:51:18.36,0:51:19.19,Default,,0,0,0,,ta có lời muốn nói với muội.
Dialogue: 0,0:51:19.48,0:51:20.28,Default,,0,0,0,,[Trái lại giống như]
Dialogue: 0,0:51:21.11,0:51:22.48,Default,,0,0,0,,[đã trải qua bãi bể nương dâu.]
Dialogue: 0,0:51:23.80,0:51:24.59,Default,,0,0,0,,Được.
Dialogue: 0,0:51:36.63,0:51:37.36,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:51:37.88,0:51:39.32,Default,,0,0,0,,chúng ta quen nhau từ nhỏ,
Dialogue: 0,0:51:39.76,0:51:40.63,Default,,0,0,0,,mười năm nay,
Dialogue: 0,0:51:40.84,0:51:42.96,Default,,0,0,0,,tình cảm của ta chưa từng thay đổi.
Dialogue: 0,0:51:49.71,0:51:50.71,Default,,0,0,0,,[Đại sư huynh,]
Dialogue: 0,0:51:51.80,0:51:53.32,Default,,0,0,0,,[không ngờ có một ngày,]
Dialogue: 0,0:51:54.36,0:51:56.11,Default,,0,0,0,,[ta lại sợ nhìn thấy gương mặt huynh.]
Dialogue: 0,0:51:57.76,0:51:58.80,Default,,0,0,0,,Sư huynh,
Dialogue: 0,0:51:59.36,0:52:00.59,Default,,0,0,0,,ta đang định cảm ơn huynh.
Dialogue: 0,0:52:00.84,0:52:02.28,Default,,0,0,0,,Trước đây ta ít trải đời,
Dialogue: 0,0:52:02.48,0:52:03.59,Default,,0,0,0,,hành sự ngốc nghếch,
Dialogue: 0,0:52:04.19,0:52:06.00,Default,,0,0,0,,sư huynh không chê ta dốt nát,
Dialogue: 0,0:52:06.28,0:52:07.36,Default,,0,0,0,,luôn chăm sóc cho ta,
Dialogue: 0,0:52:07.63,0:52:08.44,Default,,0,0,0,,dạy dỗ ta.
Dialogue: 0,0:52:09.80,0:52:11.36,Default,,0,0,0,,Tô Tô biết ơn trong lòng,
Dialogue: 0,0:52:11.67,0:52:13.03,Default,,0,0,0,,không biết nên báo đáp thế nào.
Dialogue: 0,0:52:14.32,0:52:15.03,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:52:15.48,0:52:16.67,Default,,0,0,0,,ngoài biết ơn,
Dialogue: 0,0:52:17.07,0:52:18.88,Default,,0,0,0,,muội không còn gì khác\Nmuốn nói với ta sao?
Dialogue: 0,0:52:19.96,0:52:20.76,Default,,0,0,0,,Hôn ước của chúng ta...
Dialogue: 0,0:52:20.76,0:52:22.28,Default,,0,0,0,,Tình cảm của ta đối với sư huynh
Dialogue: 0,0:52:23.76,0:52:24.51,Default,,0,0,0,,có tình thân,
Dialogue: 0,0:52:25.51,0:52:26.32,Default,,0,0,0,,có kính trọng,
Dialogue: 0,0:52:27.84,0:52:29.03,Default,,0,0,0,,nhưng không còn gì khác.
Dialogue: 0,0:52:34.51,0:52:36.03,Default,,0,0,0,,Còn về chuyện chung thân đại sự,
Dialogue: 0,0:52:36.28,0:52:38.92,Default,,0,0,0,,ta sẽ tìm cơ hội nói rõ với cha,
Dialogue: 0,0:52:39.51,0:52:40.51,Default,,0,0,0,,để tự mình quyết định.
Dialogue: 0,0:52:45.19,0:52:46.96,Default,,0,0,0,,Quả nhiên muội không phải\Nlà Tô Tô trước đây nữa.
Dialogue: 0,0:52:47.84,0:52:48.80,Default,,0,0,0,,Ta hiểu rồi.
Dialogue: 0,0:52:50.32,0:52:50.92,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:52:51.71,0:52:52.80,Default,,0,0,0,,ta sẽ chứng minh với muội,
Dialogue: 0,0:52:53.55,0:52:54.59,Default,,0,0,0,,dù là quá khứ hay hiện tại,
Dialogue: 0,0:52:54.88,0:52:56.00,Default,,0,0,0,,dù muội đã trải qua những gì,
Dialogue: 0,0:52:56.19,0:52:57.92,Default,,0,0,0,,tình ý của ta đối với muội\Ncũng không thay đổi.
Dialogue: 0,0:52:58.84,0:52:59.84,Default,,0,0,0,,Không biết đến khi ấy,
Dialogue: 0,0:53:00.40,0:53:01.67,Default,,0,0,0,,muội có thể cân nhắc ta
Dialogue: 0,0:53:01.67,0:53:02.96,Default,,0,0,0,,cho chuyện chung thân đại sự\Ncủa muội không?
Dialogue: 0,0:53:05.07,0:53:06.03,Default,,0,0,0,,Tương lai còn dài.
Dialogue: 0,0:53:07.00,0:53:07.63,Default,,0,0,0,,Sư huynh,
Dialogue: 0,0:53:08.00,0:53:09.55,Default,,0,0,0,,ta không biết sau này hai ta sẽ ra sao,
Dialogue: 0,0:53:09.63,0:53:10.51,Default,,0,0,0,,nhưng bây giờ
Dialogue: 0,0:53:11.07,0:53:12.55,Default,,0,0,0,,chỉ có thể tùy duyên,\Nthuận theo ý mình thôi.
Dialogue: 0,0:53:14.28,0:53:15.11,Default,,0,0,0,,Ta hiểu rồi.
Dialogue: 0,0:53:15.96,0:53:16.84,Default,,0,0,0,,Ta sẽ chờ muội.
Dialogue: 0,0:53:23.68,0:53:28.62,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:53:43.64,0:53:51.40,Default,,0,0,0,,♪Nỗi lòng phàm tục\Nlà ngước mắt lên trăng bỗng khuyết♪
Dialogue: 0,0:53:51.40,0:53:59.20,Default,,0,0,0,,♪Hồng trần là đôi mắt thấy\Nmuôn hoa rụng giữa cơn mưa tuyết♪
Dialogue: 0,0:53:59.20,0:54:06.32,Default,,0,0,0,,♪Trắc ẩn là\Nmột cánh bướm trong lòng khi tan biến♪
Dialogue: 0,0:54:06.92,0:54:10.80,Default,,0,0,0,,♪Tỉnh ngộ là gột rửa hồi ức\Ntrong nước đục♪
Dialogue: 0,0:54:10.80,0:54:15.00,Default,,0,0,0,,♪Từ ấy chẳng gặp nhau♪
Dialogue: 0,0:54:16.56,0:54:20.16,Default,,0,0,0,,♪Ta từng thấy lời dịu dàng, từng nở hoa♪
Dialogue: 0,0:54:20.16,0:54:23.40,Default,,0,0,0,,♪Cay mắt đến nỗi nói mớ♪
Dialogue: 0,0:54:23.96,0:54:28.08,Default,,0,0,0,,♪Tơ tình vấn vương, mái ngói dễ vỡ♪
Dialogue: 0,0:54:28.08,0:54:31.60,Default,,0,0,0,,♪Một vòng tay có sự sợ hãi vô tận♪
Dialogue: 0,0:54:32.20,0:54:35.64,Default,,0,0,0,,♪Ta kính trọng người biết bao,\Nthời gian thấm thoát thoi đưa♪
Dialogue: 0,0:54:35.64,0:54:39.32,Default,,0,0,0,,♪Từng vững tin được yêu trong phút chốc♪
Dialogue: 0,0:54:39.40,0:54:43.52,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:54:43.52,0:54:51.28,Default,,0,0,0,,♪Sự thành kính tựa ánh trăng không tì vết♪
Dialogue: 0,0:54:53.28,0:54:56.68,Default,,0,0,0,,♪Hãy lắng nghe hơi thở của đóa hoa♪
Dialogue: 0,0:54:56.80,0:55:00.20,Default,,0,0,0,,♪Như sự phồn hoa của chúng sinh muôn loài♪
Dialogue: 0,0:55:00.76,0:55:04.96,Default,,0,0,0,,♪Dẫu đi bao lâu, sao trời hay bão cát♪
Dialogue: 0,0:55:04.96,0:55:09.16,Default,,0,0,0,,♪Ánh trăng là bộ giáp của ta♪
Dialogue: 0,0:55:09.16,0:55:12.48,Default,,0,0,0,,♪Ta mong sau này người mang theo vết sẹo♪
Dialogue: 0,0:55:12.48,0:55:16.44,Default,,0,0,0,,♪Cũng thử sống dịu dàng một phen♪
Dialogue: 0,0:55:16.60,0:55:20.12,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:55:20.12,0:55:27.76,Default,,0,0,0,,♪Yêu lại người từng căm hận♪
Dialogue: 0,0:55:27.76,0:55:35.16,Default,,0,0,0,,♪Kiếp phù du nhỏ, giấc mộng lớn♪
Dialogue: 0,0:55:35.16,0:55:43.80,Default,,0,0,0,,♪Xin đừng phụ lòng nhau♪
