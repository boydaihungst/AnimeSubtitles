Dialogue: 0,0:00:00.00,0:00:23.20,Default,,0,0,0,,Nhóm dịch đang gắng sức làm việc, mau chóng thay thế bản phụ đề cuối, cảm ơn bạn đã kiên nhẫn chờ đợi.
Dialogue: 0,0:00:23.20,0:00:26.96,Default,,0,0,0,,♪Đêm tối, trăng ướt, máu lạnh♪
Dialogue: 0,0:00:27.40,0:00:30.72,Default,,0,0,0,,♪Phơi bày trước\Nđôi mắt sợ ánh sáng của ta♪
Dialogue: 0,0:00:31.04,0:00:34.48,Default,,0,0,0,,♪Là sáng bừng hay ấm áp♪
Dialogue: 0,0:00:34.68,0:00:38.04,Default,,0,0,0,,♪Ta chỉ có thể suy đoán bằng trực giác♪
Dialogue: 0,0:00:38.92,0:00:46.16,Default,,0,0,0,,♪Ôi, tình yêu như mưa, tạo nên ta♪
Dialogue: 0,0:00:46.72,0:00:53.88,Default,,0,0,0,,♪Ôi, tơ tình vương vấn♪
Dialogue: 0,0:00:55.36,0:00:58.92,Default,,0,0,0,,♪Ta không sợ trên cõi đời này♪
Dialogue: 0,0:00:59.28,0:01:02.80,Default,,0,0,0,,♪Chúng sinh đối xử với ta ra sao♪
Dialogue: 0,0:01:03.44,0:01:06.60,Default,,0,0,0,,♪Đột phá, vùng vẫy♪
Dialogue: 0,0:01:06.92,0:01:11.20,Default,,0,0,0,,♪Làm sao để phân biệt chính tà, thiện ác♪
Dialogue: 0,0:01:11.64,0:01:14.92,Default,,0,0,0,,♪Từng có khoảnh khắc yếu đuối♪
Dialogue: 0,0:01:15.28,0:01:18.64,Default,,0,0,0,,♪Dùng nụ hôn tình yêu\Nđể vết thương lành lại♪
Dialogue: 0,0:01:19.16,0:01:22.60,Default,,0,0,0,,♪Sự tồn tại của ta♪
Dialogue: 0,0:01:23.12,0:01:29.64,Default,,0,0,0,,♪Sẽ không vì gai nhọn mà gãy cánh♪
Dialogue: 0,0:01:31.40,0:01:36.04,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:01:36.04,0:01:39.00,Default,,0,0,0,,[Tập 22]
Dialogue: 0,0:01:42.59,0:01:44.87,Default,,0,0,0,,Nhị tiểu thư, hay là cô về trước đi,
Dialogue: 0,0:01:45.23,0:01:46.40,Default,,0,0,0,,bệ hạ đang tức giận,
Dialogue: 0,0:01:46.40,0:01:47.43,Default,,0,0,0,,nếu bị phát hiện…
Dialogue: 0,0:01:48.68,0:01:49.76,Default,,0,0,0,,ta sẽ bị mắng.
Dialogue: 0,0:01:53.92,0:01:55.28,Default,,0,0,0,,Vậy ta sẽ đứng đây.
Dialogue: 0,0:01:55.35,0:01:56.59,Default,,0,0,0,,Khi nào ngài ấy nguôi giận
Dialogue: 0,0:01:56.59,0:01:57.76,Default,,0,0,0,,thì ta lại vào.
Dialogue: 0,0:02:00.95,0:02:01.64,Default,,0,0,0,,Đại tỷ.
Dialogue: 0,0:02:02.00,0:02:02.84,Default,,0,0,0,,Chấp Bạch Vũ,
Dialogue: 0,0:02:03.31,0:02:04.07,Default,,0,0,0,,đuổi cô ta đi.
Dialogue: 0,0:02:10.56,0:02:12.52,Default,,0,0,0,,Nhị muội, muội về trước đi.
Dialogue: 0,0:02:12.63,0:02:15.03,Default,,0,0,0,,Bây giờ bệ hạ đang tức giận,
Dialogue: 0,0:02:18.28,0:02:19.80,Default,,0,0,0,,ta đi khuyên ngài ấy vài câu thử xem.
Dialogue: 0,0:02:25.40,0:02:28.75,Default,,0,0,0,,[Đại tỷ thân với Đàm Đài Tẫn như thế\Ntừ khi nào vậy?]
Dialogue: 0,0:02:29.52,0:02:31.24,Default,,0,0,0,,Đây là canh nấm tuyết bệ hạ bảo thiếp làm,
Dialogue: 0,0:02:31.56,0:02:33.91,Default,,0,0,0,,bệ hạ nếm thử xem có hợp khẩu vị không.
Dialogue: 0,0:02:38.15,0:02:39.00,Default,,0,0,0,,Nhị tiểu thư,
Dialogue: 0,0:02:39.75,0:02:41.19,Default,,0,0,0,,hay là cô cứ về trước đi.
Dialogue: 0,0:02:41.52,0:02:42.36,Default,,0,0,0,,Bệ hạ đã nói,
Dialogue: 0,0:02:42.71,0:02:45.24,Default,,0,0,0,,mấy ngày tới bảo cô ấy luôn ở bên cạnh.
Dialogue: 0,0:03:06.40,0:03:07.43,Default,,0,0,0,,Mời bệ hạ dùng.
Dialogue: 0,0:03:24.71,0:03:26.31,Default,,0,0,0,,Không hợp khẩu vị của bệ hạ sao?
Dialogue: 0,0:03:26.56,0:03:27.59,Default,,0,0,0,,Thiếp sẽ đi nấu lại.
Dialogue: 0,0:03:28.43,0:03:29.24,Default,,0,0,0,,Không.
Dialogue: 0,0:03:29.71,0:03:30.75,Default,,0,0,0,,Vậy thì vì sao ạ?
Dialogue: 0,0:03:30.75,0:03:31.75,Default,,0,0,0,,Yên lặng chút.
Dialogue: 0,0:03:43.12,0:03:44.63,Default,,0,0,0,,Nếu cô thấy rảnh quá
Dialogue: 0,0:03:47.84,0:03:48.84,Default,,0,0,0,,thì sang bên kia ngồi
Dialogue: 0,0:03:50.28,0:03:51.52,Default,,0,0,0,,mài mực cho trẫm.
Dialogue: 0,0:03:53.47,0:03:54.68,Default,,0,0,0,,Vâng, thưa bệ hạ.
Dialogue: 0,0:04:09.15,0:04:11.40,Default,,0,0,0,,[Đàm Đài Tẫn\Nquả nhiên là kẻ tính tình kỳ quái,]
Dialogue: 0,0:04:11.75,0:04:13.15,Default,,0,0,0,,[khiến người ta không nắm bắt được.]
Dialogue: 0,0:04:14.08,0:04:14.87,Default,,0,0,0,,[Thôi vậy,]
Dialogue: 0,0:04:15.36,0:04:17.75,Default,,0,0,0,,[trên đời này làm gì có lợi ích nào\Ndễ dàng có được.]
Dialogue: 0,0:05:00.56,0:05:01.87,Default,,0,0,0,,Bớt đau buồn đi.
Dialogue: 0,0:05:02.68,0:05:04.00,Default,,0,0,0,,Đàn ông như thế
Dialogue: 0,0:05:04.83,0:05:06.43,Default,,0,0,0,,cô cứ coi như hắn chết rồi.
Dialogue: 0,0:05:08.95,0:05:10.16,Default,,0,0,0,,Hắn không thể chết.
Dialogue: 0,0:05:11.16,0:05:11.75,Default,,0,0,0,,Ta…
Dialogue: 0,0:05:14.36,0:05:15.19,Default,,0,0,0,,Diệp Tịch Vụ,
Dialogue: 0,0:05:16.60,0:05:18.51,Default,,0,0,0,,ta còn tưởng cô chỉ chơi đùa với hắn thôi,
Dialogue: 0,0:05:19.60,0:05:21.51,Default,,0,0,0,,không ngờ cô lại rơi vào bể tình trước,
Dialogue: 0,0:05:21.87,0:05:23.16,Default,,0,0,0,,còn đắm chìm sâu sắc nữa.
Dialogue: 0,0:05:27.31,0:05:28.75,Default,,0,0,0,,Tự đắm chìm ư?
Dialogue: 0,0:05:29.51,0:05:30.51,Default,,0,0,0,,Không thì sao?
Dialogue: 0,0:05:31.07,0:05:33.16,Default,,0,0,0,,Cô nhìn cái vẻ hồn vía lên mây\Ncủa cô bây giờ đi,
Dialogue: 0,0:05:34.48,0:05:36.00,Default,,0,0,0,,chẳng khác nào người phụ nữ bị ruồng bỏ.
Dialogue: 0,0:05:38.36,0:05:39.75,Default,,0,0,0,,Là ta bỏ hắn.
Dialogue: 0,0:05:40.12,0:05:42.75,Default,,0,0,0,,Phải, phải, phải, cô bỏ hắn.
Dialogue: 0,0:05:47.31,0:05:49.27,Default,,0,0,0,,Đi thôi, về ngủ với tỷ tỷ.
Dialogue: 0,0:05:59.43,0:06:00.68,Default,,0,0,0,,[Rốt cuộc cô đang làm gì vậy?]
Dialogue: 0,0:06:01.72,0:06:03.27,Default,,0,0,0,,Đàm Đài Tẫn tiêu diệt nước Thịnh,
Dialogue: 0,0:06:03.72,0:06:05.12,Default,,0,0,0,,hủy hoại nước nhà\Nvà cuộc đời của Tiêu Lẫm,
Dialogue: 0,0:06:05.12,0:06:06.68,Default,,0,0,0,,sao ngay cả cô cũng phản bội chàng?
Dialogue: 0,0:06:07.16,0:06:09.27,Default,,0,0,0,,Cô quên hết\Nnhững lời cô hứa với chàng rồi ư?
Dialogue: 0,0:06:12.16,0:06:13.83,Default,,0,0,0,,Sao ta phải quan tâm đến Tiêu Lẫm?
Dialogue: 0,0:06:14.48,0:06:17.43,Default,,0,0,0,,Là hắn vô dụng,\Nlà hắn vi phạm lời hứa trước.
Dialogue: 0,0:06:17.43,0:06:19.43,Default,,0,0,0,,Là hắn hại ta buộc phải luồn cúi bợ đỡ,
Dialogue: 0,0:06:19.43,0:06:20.51,Default,,0,0,0,,hầu hạ Đàm Đài Tẫn.
Dialogue: 0,0:06:21.31,0:06:23.07,Default,,0,0,0,,Chẳng qua ta chỉ muốn sống mà thôi.
Dialogue: 0,0:06:23.07,0:06:25.36,Default,,0,0,0,,Chuyện nước nhà không phải\Nchuyện mình chàng có thể kiểm soát được.
Dialogue: 0,0:06:25.36,0:06:27.60,Default,,0,0,0,,Huống hồ,\Nchàng có tình cảm sâu đậm với cô.
Dialogue: 0,0:06:27.60,0:06:29.27,Default,,0,0,0,,Chàng thật lòng yêu cô.
Dialogue: 0,0:06:29.63,0:06:32.43,Default,,0,0,0,,Vậy ư?\NNếu không có sợi tơ tình kia thì sao?
Dialogue: 0,0:06:33.60,0:06:36.04,Default,,0,0,0,,Tỉnh lại đi, hắn không yêu cô,
Dialogue: 0,0:06:36.04,0:06:37.24,Default,,0,0,0,,cũng chẳng có ai yêu cô cả.
Dialogue: 0,0:06:37.24,0:06:38.63,Default,,0,0,0,,Đàn ông nhìn cô nhiều hơn một cái
Dialogue: 0,0:06:38.63,0:06:40.75,Default,,0,0,0,,chỉ đơn giản là vì\Ncô có hai sợi tơ tình thôi.
Dialogue: 0,0:06:40.75,0:06:44.04,Default,,0,0,0,,Tình yêu sâu đậm có đổi được bốn chữ\N"an phận bình yên" không?
Dialogue: 0,0:06:55.43,0:06:57.16,Default,,0,0,0,,[Sao lại mơ thấy ác mộng kiểu này chứ?]
Dialogue: 0,0:06:58.87,0:07:02.43,Default,,0,0,0,,[Đâm lao thì phải theo lao, đừng do dự.]
Dialogue: 0,0:07:39.31,0:07:40.00,Default,,0,0,0,,Bệ hạ.
Dialogue: 0,0:08:10.00,0:08:11.07,Default,,0,0,0,,Bệ hạ bị sốt rồi.
Dialogue: 0,0:08:18.92,0:08:19.72,Default,,0,0,0,,Ta đi lấy thuốc,
Dialogue: 0,0:08:20.19,0:08:21.51,Default,,0,0,0,,cô chườm nước lạnh cho bệ hạ.
Dialogue: 0,0:08:28.00,0:08:29.27,Default,,0,0,0,,Chuyện này không được để lộ ra ngoài,
Dialogue: 0,0:08:29.95,0:08:30.51,Default,,0,0,0,,nếu không…
Dialogue: 0,0:08:39.36,0:08:42.44,Default,,0,0,0,,[Một tên thị vệ mạng như cỏ rác]
Dialogue: 0,0:08:42.63,0:08:44.48,Default,,0,0,0,,[mà cũng dám đe dọa ta.]
Dialogue: 0,0:09:04.63,0:09:05.48,Default,,0,0,0,,Diệp Tịch Vụ.
Dialogue: 0,0:09:12.55,0:09:13.63,Default,,0,0,0,,Diệp Tịch Vụ.
Dialogue: 0,0:09:17.91,0:09:19.44,Default,,0,0,0,,[Lại là Diệp Tịch Vụ.]
Dialogue: 0,0:09:22.60,0:09:24.79,Default,,0,0,0,,[Diệp Tịch Vụ\Nvốn đã khiến người ta chán ghét,]
Dialogue: 0,0:09:25.00,0:09:26.72,Default,,0,0,0,,[còn ngược đãi Đàm Đài Tẫn như vậy,]
Dialogue: 0,0:09:26.72,0:09:27.96,Default,,0,0,0,,[sao hắn có thể thích được?]
Dialogue: 0,0:09:28.36,0:09:30.36,Default,,0,0,0,,[Dù trong lòng hắn có Diệp Tịch Vụ,]
Dialogue: 0,0:09:30.36,0:09:31.96,Default,,0,0,0,,[chẳng phải cũng từng có ta hay sao?]
Dialogue: 0,0:09:32.15,0:09:35.12,Default,,0,0,0,,[Bây giờ người ở bên hắn là ta.]
Dialogue: 0,0:10:09.75,0:10:10.79,Default,,0,0,0,,Muộn thế này rồi,
Dialogue: 0,0:10:11.12,0:10:12.87,Default,,0,0,0,,Diệp tướng quân đứng đây làm gì?
Dialogue: 0,0:10:14.20,0:10:16.55,Default,,0,0,0,,Nhận ơn huệ của cô, nên đến cảm ơn cô.
Dialogue: 0,0:10:18.48,0:10:20.27,Default,,0,0,0,,Ngươi định cảm ơn ta thế nào đây?
Dialogue: 0,0:10:23.39,0:10:25.24,Default,,0,0,0,,Phải rồi, nhị tỷ của ta sao rồi?
Dialogue: 0,0:10:25.24,0:10:26.44,Default,,0,0,0,,Dạo này tỷ ấy và bệ hạ…
Dialogue: 0,0:10:27.44,0:10:28.72,Default,,0,0,0,,Đều là tỷ muội của ngươi
Dialogue: 0,0:10:30.12,0:10:32.08,Default,,0,0,0,,mà ngươi lại\Nrất thiên vị Diệp Tịch Vụ nhỉ?
Dialogue: 0,0:10:33.91,0:10:35.75,Default,,0,0,0,,Đau lòng một thời gian là đỡ thôi.
Dialogue: 0,0:10:36.36,0:10:39.44,Default,,0,0,0,,Đây gọi là\N"Trai phải lòng gái còn thoát ra được,
Dialogue: 0,0:10:39.96,0:10:41.67,Default,,0,0,0,,gái phải lòng trai\Nđắm đuối không lối thoát".
Dialogue: 0,0:10:43.15,0:10:44.24,Default,,0,0,0,,Nhưng mà ta thấy,
Dialogue: 0,0:10:45.87,0:10:48.63,Default,,0,0,0,,trên đời này có đầy đàn ông tuấn tú,
Dialogue: 0,0:10:49.84,0:10:52.48,Default,,0,0,0,,đúng không, Diệp tướng quân?
Dialogue: 0,0:10:56.55,0:10:57.36,Default,,0,0,0,,Cô nói đúng.
Dialogue: 0,0:10:59.96,0:11:03.75,Default,,0,0,0,,Trai phải lòng gái cũng khó thoát ra.
Dialogue: 0,0:11:15.20,0:11:16.08,Default,,0,0,0,,Diệp tướng quân,
Dialogue: 0,0:11:18.39,0:11:20.48,Default,,0,0,0,,đúng là ngươi rất vừa mắt ta,
Dialogue: 0,0:11:22.00,0:11:25.12,Default,,0,0,0,,thế nên có những lời ta phải nói trước.
Dialogue: 0,0:11:25.67,0:11:27.44,Default,,0,0,0,,Nếu ngươi muốn sớm chiều bên nhau
Dialogue: 0,0:11:28.00,0:11:29.63,Default,,0,0,0,,thì ta không phải\Nmối lương duyên của ngươi.
Dialogue: 0,0:11:30.55,0:11:32.60,Default,,0,0,0,,Nếu ngươi chỉ muốn vui vẻ chốc lát
Dialogue: 0,0:11:33.51,0:11:35.00,Default,,0,0,0,,thì ta có thể tiếp ngươi bất cứ lúc nào.
Dialogue: 0,0:11:37.20,0:11:37.96,Default,,0,0,0,,Tại sao?
Dialogue: 0,0:11:41.60,0:11:43.32,Default,,0,0,0,,Chúng ta là người và yêu,\Nkhông chung đường,
Dialogue: 0,0:11:44.24,0:11:46.87,Default,,0,0,0,,điều ta muốn chỉ là gương mặt của ngươi.
Dialogue: 0,0:11:48.24,0:11:51.84,Default,,0,0,0,,Hơn nữa, tộc hồ ly ta bản tính phong lưu,
Dialogue: 0,0:11:52.63,0:11:55.00,Default,,0,0,0,,tại sao ta phải chung tình với ngươi chứ?
Dialogue: 0,0:12:04.84,0:12:08.00,Default,,0,0,0,,Ngươi nghĩ kỹ lại đi rồi hẵng lựa chọn.
Dialogue: 0,0:12:11.96,0:12:12.55,Default,,0,0,0,,Phiên Nhiên.
Dialogue: 0,0:12:46.60,0:12:47.55,Default,,0,0,0,,Bệ hạ cẩn thận.
Dialogue: 0,0:13:07.87,0:13:10.20,Default,,0,0,0,,Nhìn gì mà nhìn?\NKhông thấy gái xinh bao giờ à?
Dialogue: 0,0:13:10.20,0:13:13.94,Default,,0,0,0,,♪Ngắm nhìn nhân gian chúng ta lưu luyến♪
Dialogue: 0,0:13:14.58,0:13:18.30,Default,,0,0,0,,♪Lật xem những năm tháng\Nsách viết khi xưa♪
Dialogue: 0,0:13:20.50,0:13:24.58,Default,,0,0,0,,♪Tàn dư của\Nmột giấc mộng phù hoa sống động♪
Dialogue: 0,0:13:27.44,0:13:28.39,Default,,0,0,0,,Được rồi, được rồi,
Dialogue: 0,0:13:28.72,0:13:29.84,Default,,0,0,0,,loại đàn ông thối tha ấy
Dialogue: 0,0:13:29.84,0:13:31.27,Default,,0,0,0,,là xứng với loại phụ nữ này nhất rồi.
Dialogue: 0,0:13:31.75,0:13:33.79,Default,,0,0,0,,Tỷ đừng nói vậy, tỷ ấy là tỷ tỷ của ta.
Dialogue: 0,0:13:36.75,0:13:39.44,Default,,0,0,0,,Ta nói này, cô thích hắn đến thế à?
Dialogue: 0,0:13:42.36,0:13:43.75,Default,,0,0,0,,Ta cũng không biết mình làm sao nữa.
Dialogue: 0,0:13:43.75,0:13:46.18,Default,,0,0,0,,♪Mà vẫn lưu luyến không rời♪
Dialogue: 0,0:13:46.46,0:13:50.27,Default,,0,0,0,,♪Gửi gắm tro tàn và ánh sáng\Nvào vầng trăng♪
Dialogue: 0,0:13:50.27,0:13:51.39,Default,,0,0,0,,Được rồi…
Dialogue: 0,0:13:52.12,0:13:53.36,Default,,0,0,0,,Không khóc nữa…
Dialogue: 0,0:13:53.36,0:13:55.48,Default,,0,0,0,,Thích đàn ông thối cũng đâu mất mặt,
Dialogue: 0,0:13:55.48,0:13:56.32,Default,,0,0,0,,đúng không?
Dialogue: 0,0:13:56.32,0:13:59.27,Default,,0,0,0,,♪Động lòng cũng là xuân thu♪
Dialogue: 0,0:13:59.27,0:14:00.24,Default,,0,0,0,,Được rồi.
Dialogue: 0,0:14:00.96,0:14:02.91,Default,,0,0,0,,Không được ngồi xe ngựa\Nthì cưỡi ngựa với tỷ tỷ.
Dialogue: 0,0:14:05.91,0:14:06.60,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:14:10.62,0:14:14.38,Default,,0,0,0,,♪Nguyện dùng kiếp này đổi lấy vĩnh hằng♪
Dialogue: 0,0:14:14.86,0:14:17.34,Default,,0,0,0,,♪Tình cảm giả dối cũng đủ rồi♪
Dialogue: 0,0:14:17.34,0:14:20.30,Default,,0,0,0,,♪Thật lòng khó phong lưu♪
Dialogue: 0,0:14:21.14,0:14:26.34,Default,,0,0,0,,♪Vẫn tin cảm động người mang đến♪
Dialogue: 0,0:14:28.00,0:14:31.44,Default,,0,0,0,,Bệ hạ, chè này đã ướp lạnh xong rồi.
Dialogue: 0,0:14:32.15,0:14:32.75,Default,,0,0,0,,Bệ hạ.
Dialogue: 0,0:14:36.34,0:14:39.98,Default,,0,0,0,,♪Khổ sở chờ đợi♪
Dialogue: 0,0:14:47.15,0:14:49.87,Default,,0,0,0,,[Rốt cuộc nhị muội đã chiếm\Nbao nhiêu vị trí trong lòng hắn vậy?]
Dialogue: 0,0:14:50.67,0:14:53.03,Default,,0,0,0,,[Chẳng lẽ hắn đã quên hết những việc]
Dialogue: 0,0:14:53.03,0:14:54.27,Default,,0,0,0,,[Diệp Tịch Vụ\Nlàm với hắn trước đây rồi ư?]
Dialogue: 0,0:15:01.36,0:15:04.39,Default,,0,0,0,,Sao bệ hạ không cho nhị muội\Nlên xe ngồi cùng?
Dialogue: 0,0:15:05.72,0:15:07.51,Default,,0,0,0,,Tuy những hành vi của nhị muội lúc trước
Dialogue: 0,0:15:07.51,0:15:08.63,Default,,0,0,0,,có hơi quá đáng
Dialogue: 0,0:15:08.91,0:15:10.63,Default,,0,0,0,,nhưng dù gì muội ấy\Ncũng là một nữ tử yếu đuối,
Dialogue: 0,0:15:10.96,0:15:13.91,Default,,0,0,0,,hay là bệ hạ buông bỏ ân oán,\Ntha thứ cho muội ấy đi?
Dialogue: 0,0:15:18.24,0:15:18.96,Default,,0,0,0,,Không cần.
Dialogue: 0,0:15:22.32,0:15:24.00,Default,,0,0,0,,Trước đây bệ hạ đã như thế này.
Dialogue: 0,0:15:25.48,0:15:26.91,Default,,0,0,0,,Nay nhớ lại,
Dialogue: 0,0:15:27.63,0:15:31.55,Default,,0,0,0,,không ngờ Băng Thường đã quen bệ hạ\Nnhiều năm vậy rồi.
Dialogue: 0,0:15:32.72,0:15:34.79,Default,,0,0,0,,Lúc trước bệ hạ làm con tin ở nước Thịnh,
Dialogue: 0,0:15:34.79,0:15:35.79,Default,,0,0,0,,cảnh ngộ khó khăn,
Dialogue: 0,0:15:35.84,0:15:37.84,Default,,0,0,0,,Thịnh vương coi ngài\Nnhư cái gai trong mắt,
Dialogue: 0,0:15:38.24,0:15:40.44,Default,,0,0,0,,mỗi lần thiếp vào cung\Nthấy ngài bị làm khó
Dialogue: 0,0:15:40.75,0:15:41.79,Default,,0,0,0,,đều vô cùng thương xót.
Dialogue: 0,0:15:43.36,0:15:45.79,Default,,0,0,0,,Nay bệ hạ thống nhất thiên hạ,
Dialogue: 0,0:15:45.79,0:15:48.75,Default,,0,0,0,,thiên hạ này chính là bồi thường tốt nhất\Nđối với ngài.
Dialogue: 0,0:15:52.51,0:15:55.87,Default,,0,0,0,,Đều là chuyện quá khứ,\Nnay Tiêu Dật đã chết,
Dialogue: 0,0:15:56.63,0:15:57.32,Default,,0,0,0,,trẫm
Dialogue: 0,0:15:59.84,0:16:01.39,Default,,0,0,0,,không cần bồi thường gì cả.
Dialogue: 0,0:16:03.00,0:16:04.51,Default,,0,0,0,,Bệ hạ vẫn luôn hiếu thắng,
Dialogue: 0,0:16:05.03,0:16:06.79,Default,,0,0,0,,thiếp lại không thể làm ngơ.
Dialogue: 0,0:16:06.87,0:16:07.72,Default,,0,0,0,,Sau này
Dialogue: 0,0:16:10.00,0:16:11.60,Default,,0,0,0,,thiếp sẽ ở bên bệ hạ.
Dialogue: 0,0:16:31.44,0:16:32.20,Default,,0,0,0,,Bồi thường ư?
Dialogue: 0,0:16:33.79,0:16:36.91,Default,,0,0,0,,Trên đời này thứ giả dối nhất\Nchính là bồi thường.
Dialogue: 0,0:16:44.20,0:16:45.20,Default,,0,0,0,,Diệp Băng Thường,
Dialogue: 0,0:16:45.60,0:16:48.39,Default,,0,0,0,,trước đây cô coi trẫm như thú dữ.
Dialogue: 0,0:16:49.36,0:16:52.36,Default,,0,0,0,,Sao hả? Giờ lại không sợ trẫm nữa ư?
Dialogue: 0,0:16:59.27,0:17:03.12,Default,,0,0,0,,Đúng là trước đây thiếp sợ bệ hạ,
Dialogue: 0,0:17:04.16,0:17:05.31,Default,,0,0,0,,nhưng bây giờ
Dialogue: 0,0:17:05.31,0:17:07.83,Default,,0,0,0,,thiếp và bệ hạ đều là người\Ntừng gặp chuyện ly tán.
Dialogue: 0,0:17:09.40,0:17:13.59,Default,,0,0,0,,Có lẽ thiếp có thể hiểu được đôi chút\Nvề nỗi đau của bệ hạ.
Dialogue: 0,0:17:14.72,0:17:17.11,Default,,0,0,0,,Bệ hạ từ nước Cảnh đến Thịnh mười mấy năm,
Dialogue: 0,0:17:17.55,0:17:20.79,Default,,0,0,0,,mà quãng đời còn lại của thiếp\Nđều ở nước Cảnh,
Dialogue: 0,0:17:21.72,0:17:22.83,Default,,0,0,0,,bầu bạn bên nhau,
Dialogue: 0,0:17:24.55,0:17:25.64,Default,,0,0,0,,nước chảy đá mòn.
Dialogue: 0,0:17:43.68,0:17:46.48,Default,,0,0,0,,Trẫm hơi mệt rồi, cô lui ra đi.
Dialogue: 0,0:17:53.27,0:17:54.00,Default,,0,0,0,,Vâng.
Dialogue: 0,0:18:09.27,0:18:10.00,Default,,0,0,0,,Đại tỷ.
Dialogue: 0,0:18:11.24,0:18:12.51,Default,,0,0,0,,Căng thẳng thế làm gì?
Dialogue: 0,0:18:12.83,0:18:15.27,Default,,0,0,0,,Hai tỷ muội ta ngồi xuống nói chuyện đi.
Dialogue: 0,0:18:18.79,0:18:20.20,Default,,0,0,0,,Đại tỷ muốn nói gì với ta?
Dialogue: 0,0:18:21.83,0:18:22.64,Default,,0,0,0,,Tịch Vụ à,
Dialogue: 0,0:18:22.96,0:18:25.11,Default,,0,0,0,,chúng ta không nói vòng vo nữa.
Dialogue: 0,0:18:25.96,0:18:27.88,Default,,0,0,0,,Trước đây Đàm Đài Tẫn đã thích ta,
Dialogue: 0,0:18:28.59,0:18:30.59,Default,,0,0,0,,những năm này do có điện hạ\Nnên cầu mà không được,
Dialogue: 0,0:18:30.92,0:18:31.88,Default,,0,0,0,,muội biết chứ?
Dialogue: 0,0:18:33.75,0:18:34.64,Default,,0,0,0,,Ta biết.
Dialogue: 0,0:18:36.48,0:18:38.03,Default,,0,0,0,,Nay ta chẳng còn gì nữa rồi,
Dialogue: 0,0:18:38.72,0:18:40.16,Default,,0,0,0,,muốn sống tiếp
Dialogue: 0,0:18:40.75,0:18:41.88,Default,,0,0,0,,thì chỉ còn cách dựa vào
Dialogue: 0,0:18:41.88,0:18:43.44,Default,,0,0,0,,cọng rơm cứu mạng là Đàm Đài Tẫn thôi.
Dialogue: 0,0:18:43.92,0:18:44.68,Default,,0,0,0,,Nhị muội,
Dialogue: 0,0:18:44.68,0:18:46.20,Default,,0,0,0,,muội sẽ không rút cọng rơm này
Dialogue: 0,0:18:46.20,0:18:47.96,Default,,0,0,0,,khỏi tay tỷ tỷ chứ?
Dialogue: 0,0:18:52.11,0:18:54.51,Default,,0,0,0,,Không đâu, ta lại không thích hắn.
Dialogue: 0,0:18:56.48,0:18:57.75,Default,,0,0,0,,Thế thì ta yên tâm rồi.
Dialogue: 0,0:18:58.24,0:18:58.83,Default,,0,0,0,,Nhị muội,
Dialogue: 0,0:18:59.24,0:19:02.20,Default,,0,0,0,,đúng là trước đây\Nmuội hơi quá đáng với bệ hạ,
Dialogue: 0,0:19:02.48,0:19:05.88,Default,,0,0,0,,nay ngài ấy thù dai\Ncũng là chuyện thường tình.
Dialogue: 0,0:19:05.88,0:19:07.35,Default,,0,0,0,,Nhưng chờ ta dỗ được ngài ấy rồi,
Dialogue: 0,0:19:07.55,0:19:09.31,Default,,0,0,0,,nhất định sẽ bảo ngài ấy\Nkhông làm khó muội.
Dialogue: 0,0:19:27.24,0:19:27.83,Default,,0,0,0,,Bệ hạ,
Dialogue: 0,0:19:28.40,0:19:29.88,Default,,0,0,0,,đây là quân đoàn con rối Âm Sát
Dialogue: 0,0:19:29.88,0:19:31.44,Default,,0,0,0,,mà thuộc hạ đào tạo được\Ntrong thời gian qua.
Dialogue: 0,0:19:31.92,0:19:34.51,Default,,0,0,0,,Những con rối này không biết đau,\Nkhông sợ đao kiếm,
Dialogue: 0,0:19:34.72,0:19:36.79,Default,,0,0,0,,bệ hạ có thể dùng yêu lực điều khiển.
Dialogue: 0,0:19:37.11,0:19:39.44,Default,,0,0,0,,Hiện giờ chúng ta\Ncó bao nhiêu quân Âm Sát?
Dialogue: 0,0:19:40.92,0:19:41.72,Default,,0,0,0,,Bẩm bệ hạ,
Dialogue: 0,0:19:42.20,0:19:43.44,Default,,0,0,0,,thêm đám tù binh
Dialogue: 0,0:19:43.44,0:19:45.11,Default,,0,0,0,,Thịnh vương đưa tới lúc trước,
Dialogue: 0,0:19:45.64,0:19:47.00,Default,,0,0,0,,đã có bốn nghìn quân rồi.
Dialogue: 0,0:19:51.55,0:19:54.24,Default,,0,0,0,,Đàm Đài Tẫn có gần mười vạn quân Cảnh,
Dialogue: 0,0:19:54.64,0:19:56.35,Default,,0,0,0,,còn mấy vạn quân Sí Dực nữa,
Dialogue: 0,0:19:56.75,0:19:58.92,Default,,0,0,0,,vậy ai trong số các ngươi\Ncó thể nói cho trẫm biết
Dialogue: 0,0:19:59.27,0:20:00.88,Default,,0,0,0,,chỉ dựa vào bốn nghìn con rối
Dialogue: 0,0:20:01.72,0:20:03.48,Default,,0,0,0,,thì phải giành lấy\Nkinh đô nước Cảnh thế nào đây?
Dialogue: 0,0:20:10.64,0:20:12.96,Default,,0,0,0,,Bệ hạ, nay nước Thịnh diệt vong,
Dialogue: 0,0:20:12.96,0:20:15.35,Default,,0,0,0,,Đàm Đài Tẫn thống nhất Thịnh - Cảnh,\Nđang cực kỳ hưng thịnh,
Dialogue: 0,0:20:15.75,0:20:16.83,Default,,0,0,0,,muốn giành được kinh đô nước Cảnh
Dialogue: 0,0:20:16.83,0:20:18.51,Default,,0,0,0,,e không phải chuyện một sớm một chiều.
Dialogue: 0,0:20:18.72,0:20:20.88,Default,,0,0,0,,Mong bệ hạ tích lũy lực lượng.
Dialogue: 0,0:20:21.11,0:20:22.51,Default,,0,0,0,,Một lũ vô dụng.
Dialogue: 0,0:20:25.51,0:20:26.24,Default,,0,0,0,,Phù Ngọc,
Dialogue: 0,0:20:27.92,0:20:30.00,Default,,0,0,0,,không được để chúng lừa trẫm nữa.
Dialogue: 0,0:20:30.51,0:20:32.64,Default,,0,0,0,,Nếu trong vòng một tháng\Ncòn không nghĩ ra cách
Dialogue: 0,0:20:32.83,0:20:34.27,Default,,0,0,0,,thì tự chịu hậu quả.
Dialogue: 0,0:20:35.51,0:20:36.24,Default,,0,0,0,,Vâng.
Dialogue: 0,0:20:42.96,0:20:43.92,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:20:45.40,0:20:46.20,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:20:52.51,0:20:53.48,Default,,0,0,0,,Diệp Tịch Vụ.
Dialogue: 0,0:20:54.83,0:20:55.72,Default,,0,0,0,,Nàng về rồi.
Dialogue: 0,0:20:57.16,0:20:59.68,Default,,0,0,0,,Đàm Đài Tẫn, chàng thích ta không?
Dialogue: 0,0:21:01.31,0:21:02.00,Default,,0,0,0,,Ta…
Dialogue: 0,0:21:02.92,0:21:04.79,Default,,0,0,0,,Chàng thích ta, sao không dám nói?
Dialogue: 0,0:21:04.79,0:21:07.07,Default,,0,0,0,,Chàng sợ nói thích ta sẽ mất mặt,
Dialogue: 0,0:21:07.07,0:21:09.16,Default,,0,0,0,,sẽ thất vọng, sẽ bị ta vứt bỏ ư?
Dialogue: 0,0:21:10.03,0:21:10.72,Default,,0,0,0,,Im miệng.
Dialogue: 0,0:21:11.51,0:21:13.72,Default,,0,0,0,,Chàng xem, chàng cứ như vậy.
Dialogue: 0,0:21:14.31,0:21:15.27,Default,,0,0,0,,Nên là thôi đi,
Dialogue: 0,0:21:15.72,0:21:16.92,Default,,0,0,0,,ta đi thích người khác đây.
Dialogue: 0,0:21:16.92,0:21:19.24,Default,,0,0,0,,Ở bên chàng chẳng vui gì cả.
Dialogue: 0,0:21:19.75,0:21:20.72,Default,,0,0,0,,Diệp Tịch Vụ.
Dialogue: 0,0:21:20.88,0:21:21.88,Default,,0,0,0,,Chàng thả ta ra.
Dialogue: 0,0:21:22.83,0:21:25.20,Default,,0,0,0,,Diệp Tịch Vụ, Diệp Tịch Vụ,\Nnàng quay lại đây.
Dialogue: 0,0:21:34.72,0:21:37.68,Default,,0,0,0,,Vừa nãy bệ hạ nằm mơ ư?
Dialogue: 0,0:21:38.64,0:21:41.40,Default,,0,0,0,,Nếu mệt chi bằng hãy nghỉ ngơi sớm đi.
Dialogue: 0,0:21:45.96,0:21:46.64,Default,,0,0,0,,Nằm mơ?
Dialogue: 0,0:21:47.51,0:21:49.31,Default,,0,0,0,,Ngươi trời sinh không có tơ tình
Dialogue: 0,0:21:49.40,0:21:51.75,Default,,0,0,0,,nên không có cảm xúc,
Dialogue: 0,0:21:52.96,0:21:56.20,Default,,0,0,0,,không biết vui, không biết buồn,\Ncũng không cảm thấy sợ.
Dialogue: 0,0:21:56.59,0:21:58.75,Default,,0,0,0,,[Người không có tơ tình\Nthì lấy đâu ra ác mộng?]
Dialogue: 0,0:21:58.75,0:22:00.20,Default,,0,0,0,,Thì ra đây là nằm mơ.
Dialogue: 0,0:22:08.51,0:22:09.55,Default,,0,0,0,,Nói đến mơ,
Dialogue: 0,0:22:10.27,0:22:12.16,Default,,0,0,0,,trong Bát Nhã Phù Sinh
Dialogue: 0,0:22:12.48,0:22:14.11,Default,,0,0,0,,ta đã thương bệ hạ,
Dialogue: 0,0:22:14.35,0:22:17.55,Default,,0,0,0,,thề kiếp này chỉ lấy bệ hạ.
Dialogue: 0,0:22:18.03,0:22:21.20,Default,,0,0,0,,Trong Bát Nhã Phù Sinh\Ncô làm đủ việc ác,
Dialogue: 0,0:22:21.88,0:22:23.27,Default,,0,0,0,,lẽ nào cũng muốn bắt chước ư?
Dialogue: 0,0:22:26.07,0:22:27.35,Default,,0,0,0,,Chỉ là một giấc mơ mà thôi.
Dialogue: 0,0:22:27.35,0:22:30.00,Default,,0,0,0,,Đã là mơ, thì còn nhắc đến nó làm gì?
Dialogue: 0,0:22:41.92,0:22:44.35,Default,,0,0,0,,Diệp Băng Thường, trẫm hỏi cô,
Dialogue: 0,0:22:44.96,0:22:48.11,Default,,0,0,0,,thời gian này ở cùng trẫm,
Dialogue: 0,0:22:48.51,0:22:49.92,Default,,0,0,0,,cô có thấy vui không?
Dialogue: 0,0:22:51.44,0:22:53.11,Default,,0,0,0,,Có thể được ở bên bệ hạ
Dialogue: 0,0:22:53.55,0:22:55.96,Default,,0,0,0,,là chuyện Băng Thường hằng mong ước.
Dialogue: 0,0:22:55.96,0:22:57.59,Default,,0,0,0,,Trẫm hỏi cô có vui không?
Dialogue: 0,0:23:04.07,0:23:06.51,Default,,0,0,0,,Đương nhiên là vui rồi.
Dialogue: 0,0:23:06.51,0:23:07.96,Default,,0,0,0,,Cô nói dối.
Dialogue: 0,0:23:11.88,0:23:14.96,Default,,0,0,0,,Những gì thiếp nói đều là lời thật lòng.
Dialogue: 0,0:23:15.48,0:23:19.11,Default,,0,0,0,,Nước Thịnh vừa diệt vong,\NTiêu Lẫm không rõ sống chết,
Dialogue: 0,0:23:19.64,0:23:23.00,Default,,0,0,0,,cô vừa đến nước khác,\Nở bên vua như ở bên hổ,
Dialogue: 0,0:23:23.75,0:23:25.44,Default,,0,0,0,,sao lại thấy vui được?
Dialogue: 0,0:23:31.24,0:23:32.48,Default,,0,0,0,,Sau khi quy hàng, Diệp Thanh Vũ
Dialogue: 0,0:23:32.48,0:23:35.11,Default,,0,0,0,,chưa từng làm\Nchuyện nịnh nọt lấy lòng trẫm.
Dialogue: 0,0:23:35.31,0:23:38.24,Default,,0,0,0,,Tuy hắn tin tưởng thần phục trẫm,\Nnhưng cũng kính sợ trẫm.
Dialogue: 0,0:23:39.68,0:23:40.48,Default,,0,0,0,,Còn cô,
Dialogue: 0,0:23:41.40,0:23:42.20,Default,,0,0,0,,cô bầu bạn với
Dialogue: 0,0:23:42.20,0:23:44.79,Default,,0,0,0,,quân vương vừa khiến cô nước mất nhà tan
Dialogue: 0,0:23:45.79,0:23:48.03,Default,,0,0,0,,chỉ là để tìm kiếm sự che chở thôi.
Dialogue: 0,0:23:48.20,0:23:49.72,Default,,0,0,0,,Bảo trẫm phải tin cô thế nào đây?
Dialogue: 0,0:23:51.75,0:23:54.00,Default,,0,0,0,,Vậy thì bệ hạ khinh thường thiếp rồi.
Dialogue: 0,0:23:56.03,0:23:57.59,Default,,0,0,0,,Lẽ nào bệ hạ đã quên
Dialogue: 0,0:23:58.11,0:23:59.72,Default,,0,0,0,,khi xưa lúc ở Diệp Phủ
Dialogue: 0,0:23:59.72,0:24:02.20,Default,,0,0,0,,Diệp Tịch Vụ đối xử tệ bạc\Nvới bệ hạ thế nào,
Dialogue: 0,0:24:02.72,0:24:05.03,Default,,0,0,0,,chẳng phải bây giờ vẫn được\Nbệ hạ yêu thương hay sao?
Dialogue: 0,0:24:05.96,0:24:07.55,Default,,0,0,0,,Một nữ tử yếu đuối như thiếp
Dialogue: 0,0:24:08.16,0:24:09.64,Default,,0,0,0,,chỉ muốn sống sót
Dialogue: 0,0:24:09.64,0:24:10.79,Default,,0,0,0,,trong thời buổi loạn lạc mà thôi.
Dialogue: 0,0:24:14.68,0:24:16.20,Default,,0,0,0,,Chẳng lẽ tìm cách sống sót
Dialogue: 0,0:24:18.59,0:24:20.68,Default,,0,0,0,,còn chia cao quý hèn mọn ư?
Dialogue: 0,0:24:28.88,0:24:29.83,Default,,0,0,0,,Diệp Băng Thường,
Dialogue: 0,0:24:31.79,0:24:33.24,Default,,0,0,0,,trong lòng trẫm,
Dialogue: 0,0:24:33.83,0:24:36.20,Default,,0,0,0,,cô còn chẳng bằng một sợi tóc\Ncủa Diệp Tịch Vụ.
Dialogue: 0,0:24:36.83,0:24:38.31,Default,,0,0,0,,Cô sang hay hèn
Dialogue: 0,0:24:39.07,0:24:40.20,Default,,0,0,0,,liên quan gì đến trẫm?
Dialogue: 0,0:24:52.24,0:24:56.24,Default,,0,0,0,,[Đàm Đài Tẫn,\Nngươi lại sỉ nhục ta như vậy.]
Dialogue: 0,0:25:18.07,0:25:18.96,Default,,0,0,0,,Bé con.
Dialogue: 0,0:25:19.92,0:25:20.88,Default,,0,0,0,,Nào, nào.
Dialogue: 0,0:25:20.88,0:25:22.00,Default,,0,0,0,,Ăn nhiều một chút.
Dialogue: 0,0:25:22.27,0:25:23.24,Default,,0,0,0,,Cảm ơn tổ mẫu.
Dialogue: 0,0:25:24.55,0:25:25.64,Default,,0,0,0,,Con xem con kìa,
Dialogue: 0,0:25:25.68,0:25:28.27,Default,,0,0,0,,sao mấy hôm nay gầy đi nhiều thế?
Dialogue: 0,0:25:30.11,0:25:31.40,Default,,0,0,0,,Chắc là nóng quá.
Dialogue: 0,0:25:32.00,0:25:33.79,Default,,0,0,0,,Nghe nói Đàm Đài Tẫn đưa Băng Thường về,
Dialogue: 0,0:25:34.03,0:25:35.55,Default,,0,0,0,,lập tức phong làm Tuyên Thành phu nhân,
Dialogue: 0,0:25:36.68,0:25:38.20,Default,,0,0,0,,khắp kinh thành đã đồn ầm lên rồi.
Dialogue: 0,0:25:38.40,0:25:39.16,Default,,0,0,0,,Chuyện gì vậy?
Dialogue: 0,0:25:48.72,0:25:49.44,Default,,0,0,0,,Ăn cơm đi.
Dialogue: 0,0:25:51.27,0:25:53.03,Default,,0,0,0,,Đàm Đài Tẫn\Nvẫn luôn thích đại tỷ của muội,
Dialogue: 0,0:25:53.44,0:25:54.55,Default,,0,0,0,,không có gì lạ hết.
Dialogue: 0,0:25:58.55,0:26:01.44,Default,,0,0,0,,Tổ mẫu, con muốn dọn về ở.
Dialogue: 0,0:26:01.92,0:26:02.83,Default,,0,0,0,,Chỉ ở mấy ngày thôi.
Dialogue: 0,0:26:03.24,0:26:05.31,Default,,0,0,0,,Đợi con nghĩ thông suốt\Nrồi nghĩ cách khác.
Dialogue: 0,0:26:05.96,0:26:08.24,Default,,0,0,0,,Nghĩ thông suốt gì? Cách khác gì?
Dialogue: 0,0:26:14.31,0:26:17.44,Default,,0,0,0,,Được, bảo Xuân Đào dọn phòng cho con,
Dialogue: 0,0:26:17.72,0:26:20.68,Default,,0,0,0,,sau này ngày nào cũng ở bên tổ mẫu.
Dialogue: 0,0:26:33.44,0:26:34.31,Default,,0,0,0,,[Diệp Tịch Vụ,]
Dialogue: 0,0:26:35.03,0:26:36.11,Default,,0,0,0,,[giận dỗi nhiều ngày như vậy,]
Dialogue: 0,0:26:36.44,0:26:37.79,Default,,0,0,0,,[nàng vẫn chưa hết giận ư?]
Dialogue: 0,0:26:41.00,0:26:41.68,Default,,0,0,0,,[Thôi.]
Dialogue: 0,0:26:42.59,0:26:44.00,Default,,0,0,0,,[Nàng đã không đến tìm ta]
Dialogue: 0,0:26:44.55,0:26:45.88,Default,,0,0,0,,[thì ta đến tìm nàng vậy.]
Dialogue: 0,0:26:48.51,0:26:49.27,Default,,0,0,0,,[Đây là…]
Dialogue: 0,0:27:14.44,0:27:15.31,Default,,0,0,0,,[Những lá thư này…]
Dialogue: 0,0:27:19.16,0:27:21.03,Default,,0,0,0,,[Lẽ nào cô ấy vẫn đang\Nliên lạc với Tiêu Lẫm ư?]
Dialogue: 0,0:28:24.07,0:28:26.64,Default,,0,0,0,,[Đàm Đài Tẫn,\Nchàng ở ải Ca vẫn ổn chứ?]
Dialogue: 0,0:28:27.35,0:28:28.51,Default,,0,0,0,,[Có bị thương không?]
Dialogue: 0,0:28:30.64,0:28:32.51,Default,,0,0,0,,[Ta phát hiện hai cây bồ công anh]
Dialogue: 0,0:28:32.51,0:28:34.11,Default,,0,0,0,,[ở ngự hoa viên quý giá của chàng.]
Dialogue: 0,0:28:34.31,0:28:36.27,Default,,0,0,0,,[Thế mà lại không bị\Nngười làm vườn nhổ mất.]
Dialogue: 0,0:28:36.68,0:28:38.07,Default,,0,0,0,,[Đúng là tốt phúc tốt số.]
Dialogue: 0,0:28:38.96,0:28:41.16,Default,,0,0,0,,[Nghe nói có thể dùng\Nbồ công anh ước nguyện]
Dialogue: 0,0:28:41.35,0:28:42.72,Default,,0,0,0,,[nên ta đã đào chúng về.]
Dialogue: 0,0:28:46.74,0:28:48.44,Default,,0,0,0,,♪Nỗi niềm chí lớn không chịu nổi♪
Dialogue: 0,0:28:48.44,0:28:53.40,Default,,0,0,0,,[Mong không bị ta làm chết\Ntrước khi chàng về.]
Dialogue: 0,0:28:58.90,0:29:01.27,Default,,0,0,0,,♪Cổ tay như bị siết lấy♪
Dialogue: 0,0:29:01.27,0:29:04.48,Default,,0,0,0,,[Đàm Đài Tẫn, khi nào chàng mới về đây?]
Dialogue: 0,0:29:05.58,0:29:08.14,Default,,0,0,0,,♪Muốn có lấy cả đời♪
Dialogue: 0,0:29:08.88,0:29:11.72,Default,,0,0,0,,[Hôm nay có một cây bồ công anh\Nbiến thành quả bóng lông màu trắng,]
Dialogue: 0,0:29:11.92,0:29:13.35,Default,,0,0,0,,[cuối cùng cũng có thể ước nguyện rồi.]
Dialogue: 0,0:29:14.68,0:29:16.68,Default,,0,0,0,,[Ta mong điều ước có thể thành sự thật,]
Dialogue: 0,0:29:17.40,0:29:19.75,Default,,0,0,0,,[lại mong chàng có thể bình an vô sự.]
Dialogue: 0,0:29:19.75,0:29:22.18,Default,,0,0,0,,♪Ai có thể chỉ biết đến mình♪
Dialogue: 0,0:29:23.03,0:29:23.79,Default,,0,0,0,,[Thôi.]
Dialogue: 0,0:29:25.59,0:29:27.55,Default,,0,0,0,,[Ước chàng bình an vô sự trước vậy.]
Dialogue: 0,0:29:27.55,0:29:31.98,Default,,0,0,0,,♪Những lời chưa nói\Nnhư nước chảy đá mòn♪
Dialogue: 0,0:29:32.26,0:29:36.42,Default,,0,0,0,,♪Từng rung động trước một ánh mắt♪
Dialogue: 0,0:29:37.79,0:29:40.31,Default,,0,0,0,,[Cây còn lại vừa nở,\Nđể dành cho chàng đấy.]
Dialogue: 0,0:29:40.55,0:29:42.96,Default,,0,0,0,,[Bao giờ chàng về, có thể\Ndùng nó ước nguyện thử xem.]
Dialogue: 0,0:29:43.38,0:29:46.34,Default,,0,0,0,,♪Chẳng biết ai làm nền cho ai♪
Dialogue: 0,0:29:46.82,0:29:51.18,Default,,0,0,0,,♪Vượt qua tầng sâu nhất trong lòng♪
Dialogue: 0,0:29:51.62,0:29:56.34,Default,,0,0,0,,♪Chưa đến lúc bạc đầu,\Nbên gối đã trống không♪
Dialogue: 0,0:30:01.88,0:30:03.03,Default,,0,0,0,,Diệp Tịch Vụ.
Dialogue: 0,0:30:26.00,0:30:27.64,Default,,0,0,0,,[Thiên thạch nhỏ,]
Dialogue: 0,0:30:27.75,0:30:28.83,Default,,0,0,0,,[ta thấy]
Dialogue: 0,0:30:29.07,0:30:30.79,Default,,0,0,0,,mi giống hệt Tiểu Ma Thần,
Dialogue: 0,0:30:31.03,0:30:32.59,Default,,0,0,0,,bên trong bên ngoài đều đen sì.
Dialogue: 0,0:30:33.35,0:30:35.20,Default,,0,0,0,,Trên thân còn có bao nhiêu lỗ,
Dialogue: 0,0:30:35.35,0:30:37.00,Default,,0,0,0,,mưu mô y hệt hắn.
Dialogue: 0,0:30:38.55,0:30:41.00,Default,,0,0,0,,Hay là ta gọi mi là Tiểu Tiểu Tẫn nhé.
Dialogue: 0,0:30:41.64,0:30:42.31,Default,,0,0,0,,Được không?
Dialogue: 0,0:30:44.02,0:30:46.02,Default,,0,0,0,,♪Mang lòng yêu như nước xiết♪
Dialogue: 0,0:30:46.02,0:30:49.14,Default,,0,0,0,,♪Lại róc rách không nghe thấy♪
Dialogue: 0,0:30:49.14,0:30:53.66,Default,,0,0,0,,♪Biết rằng cái ôm sẽ\Nchữa lành những vết sẹo♪
Dialogue: 0,0:30:53.90,0:30:57.90,Default,,0,0,0,,♪Mà vẫn dốc trọn kiếp này vì người♪
Dialogue: 0,0:30:57.90,0:31:00.94,Default,,0,0,0,,♪Một giấc mơ lớn, cùng đôi ta♪
Dialogue: 0,0:31:00.94,0:31:03.22,Default,,0,0,0,,♪Tơ tình quấn lấy hơi ấm còn sót lại♪
Dialogue: 0,0:31:03.22,0:31:05.07,Default,,0,0,0,,♪Tình yêu đã sớm bén rễ♪
Dialogue: 0,0:31:05.07,0:31:06.55,Default,,0,0,0,,[Dù sao ngươi cũng chẳng cần ta nữa.]
Dialogue: 0,0:31:08.48,0:31:10.00,Default,,0,0,0,,[Trả lại ngươi cái thứ đen sì này.]
Dialogue: 0,0:31:10.88,0:31:12.16,Default,,0,0,0,,[Hai ngươi bầu bạn với nhau đi.]
Dialogue: 0,0:31:13.10,0:31:18.10,Default,,0,0,0,,♪Đời đời kiếp kiếp vấn vương người♪
Dialogue: 0,0:31:35.42,0:31:38.34,Default,,0,0,0,,[Diệp Phủ]
Dialogue: 0,0:31:42.40,0:31:43.24,Default,,0,0,0,,Bé con à.
Dialogue: 0,0:31:43.24,0:31:43.88,Default,,0,0,0,,Tổ mẫu.
Dialogue: 0,0:31:44.96,0:31:46.88,Default,,0,0,0,,Để Xuân Đào sửa soạn là được rồi.
Dialogue: 0,0:31:47.03,0:31:47.59,Default,,0,0,0,,Dạ.
Dialogue: 0,0:31:50.40,0:31:53.96,Default,,0,0,0,,Bé con, giúp tổ mẫu\Nlàm một việc được không?
Dialogue: 0,0:31:54.27,0:31:55.11,Default,,0,0,0,,Việc gì ạ?
Dialogue: 0,0:31:55.75,0:31:58.68,Default,,0,0,0,,Nghe nói đêm nay Thanh Vũ sẽ về kinh.
Dialogue: 0,0:31:59.07,0:32:00.27,Default,,0,0,0,,Thanh Vũ sắp về rồi ạ?
Dialogue: 0,0:32:02.83,0:32:05.83,Default,,0,0,0,,Nói bé thôi, đừng để cha con nghe thấy.
Dialogue: 0,0:32:05.88,0:32:09.83,Default,,0,0,0,,Con lừa cứng đầu này không cho\Nchúng ta nhắc đến Thanh Vũ đâu.
Dialogue: 0,0:32:11.03,0:32:13.79,Default,,0,0,0,,Thẳng bé Thanh Vũ xa nhà lâu như vậy,
Dialogue: 0,0:32:14.07,0:32:16.27,Default,,0,0,0,,không biết giờ này ra sao rồi.
Dialogue: 0,0:32:17.51,0:32:19.35,Default,,0,0,0,,Ta may vài bộ xiêm y,
Dialogue: 0,0:32:19.35,0:32:22.92,Default,,0,0,0,,còn sai Xuân Đào đi mua\Nít điểm tâm và đồ bổ.
Dialogue: 0,0:32:23.48,0:32:27.07,Default,,0,0,0,,Con thay tổ mẫu bí mật\Ngửi cho nhị đệ con nhé,
Dialogue: 0,0:32:27.44,0:32:28.40,Default,,0,0,0,,được không?
Dialogue: 0,0:32:28.79,0:32:30.55,Default,,0,0,0,,Được ạ, người cứ đưa con,
Dialogue: 0,0:32:30.55,0:32:31.40,Default,,0,0,0,,để con mang cho đệ ấy.
Dialogue: 0,0:32:32.35,0:32:35.44,Default,,0,0,0,,Cháu gái ngoan, ta đi lấy cho con nhé.
Dialogue: 0,0:32:35.44,0:32:36.24,Default,,0,0,0,,Nào, nào.
Dialogue: 0,0:32:59.27,0:33:00.11,Default,,0,0,0,,Cho đệ hết đấy.
Dialogue: 0,0:33:00.31,0:33:01.40,Default,,0,0,0,,Nếu đệ còn thiếu thứ gì,
Dialogue: 0,0:33:01.40,0:33:02.68,Default,,0,0,0,,tổ mẫu bảo ta nhắn lại cho người.
Dialogue: 0,0:33:03.20,0:33:05.51,Default,,0,0,0,,Tổ mẫu sợ đệ ở ngoài\Năn không quen, ngủ không ngon.
Dialogue: 0,0:33:06.27,0:33:07.44,Default,,0,0,0,,Đệ có thiếu gì đâu.
Dialogue: 0,0:33:08.88,0:33:10.88,Default,,0,0,0,,Nhị tỷ, nếu có thời gian,
Dialogue: 0,0:33:11.40,0:33:12.55,Default,,0,0,0,,chịu khó thay đệ về nhà nhé,
Dialogue: 0,0:33:13.11,0:33:14.00,Default,,0,0,0,,ở bên tổ mẫu.
Dialogue: 0,0:33:14.31,0:33:16.44,Default,,0,0,0,,Đệ yên tâm, tổ mẫu vẫn khoẻ lắm.
Dialogue: 0,0:33:19.79,0:33:20.88,Default,,0,0,0,,Ta không tin cha
Dialogue: 0,0:33:20.88,0:33:22.24,Default,,0,0,0,,có thể cố chấp mãi thế này,
Dialogue: 0,0:33:22.48,0:33:23.59,Default,,0,0,0,,không cho đệ vào nhà.
Dialogue: 0,0:33:23.72,0:33:24.72,Default,,0,0,0,,Chuyện của đệ để sau hẵng bàn.
Dialogue: 0,0:33:25.20,0:33:27.03,Default,,0,0,0,,Đợt vừa rồi đệ có về Thịnh Đô,
Dialogue: 0,0:33:27.59,0:33:29.40,Default,,0,0,0,,mang ít sách từ nhà cũ về,
Dialogue: 0,0:33:29.40,0:33:30.27,Default,,0,0,0,,ở ngay trên ngựa.
Dialogue: 0,0:33:31.24,0:33:33.88,Default,,0,0,0,,Lát nữa tỷ giúp đệ mang về nhà nhé.
Dialogue: 0,0:33:34.79,0:33:36.48,Default,,0,0,0,,Đệ đến Thịnh Đô làm gì?
Dialogue: 0,0:33:37.96,0:33:39.00,Default,,0,0,0,,Bệ hạ chưa cho tỷ biết sao?
Dialogue: 0,0:33:40.92,0:33:41.83,Default,,0,0,0,,Cho ta biết chuyện gì?
Dialogue: 0,0:33:47.20,0:33:49.27,Default,,0,0,0,,Thanh Vũ, rốt cuộc chuyện là thế nào?
Dialogue: 0,0:33:50.11,0:33:52.51,Default,,0,0,0,,Chuyện này bí mật,\Nđáng lẽ đệ không nên nhiều lời.
Dialogue: 0,0:33:53.24,0:33:55.88,Default,,0,0,0,,Tỷ nghe xong thì giữ kín nhé.
Dialogue: 0,0:34:01.03,0:34:04.11,Default,,0,0,0,,Hài cốt của mẫu thân bệ hạ\Nbị Thịnh vương trộm mất.
Dialogue: 0,0:34:08.03,0:34:09.44,Default,,0,0,0,,Đệ đưa vài thuật sĩ tới đó,
Dialogue: 0,0:34:09.63,0:34:11.40,Default,,0,0,0,,lập đàn cầu siêu giữa\Nđống đổ nát vài ngày.
Dialogue: 0,0:34:11.96,0:34:13.11,Default,,0,0,0,,Hài cốt của Thái hậu không còn,
Dialogue: 0,0:34:13.11,0:34:14.40,Default,,0,0,0,,chỉ đành làm vậy để an ủi vong linh.
Dialogue: 0,0:34:14.67,0:34:16.48,Default,,0,0,0,,Ngoài cách đó ra,\Nđệ cũng chẳng làm được gì khác.
Dialogue: 0,0:34:19.28,0:34:19.84,Default,,0,0,0,,Nhị tỷ.
Dialogue: 0,0:34:21.71,0:34:23.84,Default,,0,0,0,,Đàm Đài Tẫn, Đàm Đài Tẫn.
Dialogue: 0,0:34:25.00,0:34:25.67,Default,,0,0,0,,Nhị tiểu thư.
Dialogue: 0,0:34:26.11,0:34:27.03,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:34:27.71,0:34:28.40,Default,,0,0,0,,Nhị tiểu thư.
Dialogue: 0,0:34:28.40,0:34:30.63,Default,,0,0,0,,Đàm Đài Tẫn, Đàm Đài Tẫn.
Dialogue: 0,0:34:30.96,0:34:32.96,Default,,0,0,0,,Nhị tiểu thư, cô làm gì đó?
Dialogue: 0,0:34:33.23,0:34:34.15,Default,,0,0,0,,Đàm Đài Tẫn đâu rồi?
Dialogue: 0,0:34:34.80,0:34:35.28,Default,,0,0,0,,Ngài ấy…
Dialogue: 0,0:34:35.28,0:34:37.15,Default,,0,0,0,,Hắn đâu rồi? Ta có chuyện cần nói với hắn.
Dialogue: 0,0:34:38.36,0:34:40.67,Default,,0,0,0,,Ơ hay, ngươi lắc đầu là ý gì?
Dialogue: 0,0:34:41.67,0:34:44.15,Default,,0,0,0,,Bệ hạ không cho ta nói,\Ncũng không cho ta theo.
Dialogue: 0,0:35:48.15,0:35:49.03,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:36:08.07,0:36:09.07,Default,,0,0,0,,Nàng đến đây làm gì?
Dialogue: 0,0:36:10.96,0:36:11.76,Default,,0,0,0,,Xin lỗi.
Dialogue: 0,0:36:18.67,0:36:20.15,Default,,0,0,0,,Ta có thành kiến với chàng,
Dialogue: 0,0:36:20.48,0:36:21.84,Default,,0,0,0,,còn chưa rõ chuyện gì
Dialogue: 0,0:36:22.28,0:36:24.11,Default,,0,0,0,,đã nói ra những lời\Ntổn thương chàng như vậy.
Dialogue: 0,0:36:24.71,0:36:26.07,Default,,0,0,0,,Ta trách lầm chàng rồi.
Dialogue: 0,0:36:28.92,0:36:29.80,Default,,0,0,0,,Ta xin lỗi.
Dialogue: 0,0:36:41.40,0:36:42.96,Default,,0,0,0,,Ta thấy rất rõ
Dialogue: 0,0:36:44.07,0:36:45.51,Default,,0,0,0,,ánh mắt nàng lúc nhìn vào ta,
Dialogue: 0,0:36:45.92,0:36:47.67,Default,,0,0,0,,trong mắt nàng ẩn chứa nỗi sợ,
Dialogue: 0,0:36:48.71,0:36:51.36,Default,,0,0,0,,sự chán ghét và căm hận.
Dialogue: 0,0:36:52.28,0:36:53.92,Default,,0,0,0,,Người khác đều có thể nhìn ta như vậy,
Dialogue: 0,0:36:55.03,0:36:58.15,Default,,0,0,0,,dù gì bao năm qua ta cũng đã quen rồi.
Dialogue: 0,0:37:00.11,0:37:01.63,Default,,0,0,0,,Nhưng sao có thể là nàng được?
Dialogue: 0,0:37:06.07,0:37:09.03,Default,,0,0,0,,Không có lần sau nữa đâu, ta xin hứa.
Dialogue: 0,0:37:25.00,0:37:27.48,Default,,0,0,0,,Sau này nàng có bằng lòng ở bên ta không?
Dialogue: 0,0:37:30.19,0:37:31.03,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:37:32.71,0:37:34.36,Default,,0,0,0,,chàng có thích đại tỷ ta không?
Dialogue: 0,0:37:48.36,0:37:50.59,Default,,0,0,0,,Sở dĩ ta đón cô ta từ nước Thịnh về
Dialogue: 0,0:37:51.55,0:37:53.28,Default,,0,0,0,,là vì cô ta là tỷ tỷ nàng.
Dialogue: 0,0:37:54.51,0:37:58.28,Default,,0,0,0,,Ta cứ nghĩ ta làm vậy thì nàng sẽ vui.
Dialogue: 0,0:38:07.76,0:38:08.51,Default,,0,0,0,,Trước kia
Dialogue: 0,0:38:09.96,0:38:10.55,Default,,0,0,0,,ta giống một kẻ mù
Dialogue: 0,0:38:10.55,0:38:12.80,Default,,0,0,0,,sống trong bóng tối,
Dialogue: 0,0:38:13.40,0:38:16.92,Default,,0,0,0,,mắc kẹt giữa hư vô hơn hai mươi năm.
Dialogue: 0,0:38:19.71,0:38:23.15,Default,,0,0,0,,Người người đều nói\Nmặt trời rất sáng, rất ấm áp,
Dialogue: 0,0:38:24.40,0:38:26.07,Default,,0,0,0,,ta thì chẳng biết sáng thực sự
Dialogue: 0,0:38:26.67,0:38:28.36,Default,,0,0,0,,là như thế nào.
Dialogue: 0,0:38:30.03,0:38:30.88,Default,,0,0,0,,Vậy nên
Dialogue: 0,0:38:31.84,0:38:34.51,Default,,0,0,0,,ta nhìn cách Tiêu Lẫm\Ncư xử với Diệp Băng Thường,
Dialogue: 0,0:38:35.07,0:38:36.80,Default,,0,0,0,,ta tưởng rằng đó là thích,
Dialogue: 0,0:38:37.88,0:38:41.71,Default,,0,0,0,,nên cũng bắt chước\Nđối xử với cô ta như vậy.
Dialogue: 0,0:38:47.36,0:38:48.71,Default,,0,0,0,,Mãi đến khi ta gặp được nàng.
Dialogue: 0,0:38:50.63,0:38:52.48,Default,,0,0,0,,Thì ra đó hoàn toàn không phải là thích.
Dialogue: 0,0:38:57.11,0:39:00.11,Default,,0,0,0,,Lúc mới đầu ta cũng không hiểu
Dialogue: 0,0:39:01.71,0:39:03.84,Default,,0,0,0,,tại sao những lúc ở cùng nàng
Dialogue: 0,0:39:05.23,0:39:08.36,Default,,0,0,0,,trong lòng lại dấy lên nhiều\Ncảm giác lạ như vậy.
Dialogue: 0,0:39:10.28,0:39:13.44,Default,,0,0,0,,Mãi đến khi nàng rời xa ta, ta mới hiểu,
Dialogue: 0,0:39:15.63,0:39:18.03,Default,,0,0,0,,sở dĩ lòng ta nảy sinh yêu thích
Dialogue: 0,0:39:25.44,0:39:28.71,Default,,0,0,0,,là bởi người đó là nàng,\Nkhông phải ai khác.
Dialogue: 0,0:39:33.28,0:39:34.15,Default,,0,0,0,,Diệp Tịch Vụ,
Dialogue: 0,0:39:36.11,0:39:37.59,Default,,0,0,0,,người ta thích là nàng,
Dialogue: 0,0:39:39.40,0:39:40.96,Default,,0,0,0,,không phải bất kỳ điều gì khác.
Dialogue: 0,0:39:42.71,0:39:43.67,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:39:44.92,0:39:46.63,Default,,0,0,0,,chàng nói chuyện sến thật đấy.
Dialogue: 0,0:39:47.00,0:39:49.07,Default,,0,0,0,,Từng câu từng chữ ta nói đều là thật lòng.
Dialogue: 0,0:39:55.96,0:39:57.67,Default,,0,0,0,,Ta cũng phải mất một thời gian rất dài
Dialogue: 0,0:39:58.32,0:40:00.07,Default,,0,0,0,,mới hiểu ra được những điều này.
Dialogue: 0,0:40:09.28,0:40:10.67,Default,,0,0,0,,Vậy chàng thật ngốc.
Dialogue: 0,0:40:14.19,0:40:15.07,Default,,0,0,0,,Diệp Tịch Vụ,
Dialogue: 0,0:40:17.11,0:40:22.11,Default,,0,0,0,,những ngày qua ta đã học được\Ncách thích, mong chờ,
Dialogue: 0,0:40:23.80,0:40:26.11,Default,,0,0,0,,thất vọng, ghen ghét,
Dialogue: 0,0:40:27.80,0:40:30.40,Default,,0,0,0,,chua xót và cả oán hận,
Dialogue: 0,0:40:35.71,0:40:37.44,Default,,0,0,0,,tất cả đều là nàng dạy cho ta biết.
Dialogue: 0,0:40:40.44,0:40:42.48,Default,,0,0,0,,Ta sẵn lòng thử làm một người tốt.
Dialogue: 0,0:40:43.55,0:40:44.32,Default,,0,0,0,,Nàng
Dialogue: 0,0:40:45.80,0:40:47.44,Default,,0,0,0,,có thể đừng đi nữa không?
Dialogue: 0,0:40:57.50,0:40:58.59,Default,,0,0,0,,♪Ta muốn mượn nơi chân trời♪
Dialogue: 0,0:40:58.59,0:41:01.03,Default,,0,0,0,,Chàng yên tâm, từ nay về sau,
Dialogue: 0,0:41:01.44,0:41:03.48,Default,,0,0,0,,ngày nào ta cũng sẽ quấn lấy chàng,
Dialogue: 0,0:41:03.92,0:41:05.48,Default,,0,0,0,,chàng có muốn đuổi ta đi cũng không được.
Dialogue: 0,0:41:05.98,0:41:09.14,Default,,0,0,0,,♪Gió tuyết cũng lửng lơ đáp xuống♪
Dialogue: 0,0:41:09.63,0:41:10.28,Default,,0,0,0,,Được.
Dialogue: 0,0:41:10.28,0:41:14.10,Default,,0,0,0,,♪Lơ lửng trong cảnh xưa vật cũ♪
Dialogue: 0,0:41:14.10,0:41:16.66,Default,,0,0,0,,♪Lãng quên tất cả của mình♪
Dialogue: 0,0:41:17.22,0:41:22.02,Default,,0,0,0,,♪Giấc mộng lơ lửng, giọt lệ đổi lấy người♪
Dialogue: 0,0:41:22.67,0:41:23.63,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:41:24.96,0:41:26.51,Default,,0,0,0,,còn một việc nữa.
Dialogue: 0,0:41:27.36,0:41:29.32,Default,,0,0,0,,Trước đó ta giận chàng,
Dialogue: 0,0:41:30.07,0:41:33.40,Default,,0,0,0,,ta đã vứt ngôi sao\Nmà chàng tặng ta xuống hồ nước rồi.
Dialogue: 0,0:41:35.03,0:41:38.59,Default,,0,0,0,,Hôm nay ta vớt rất lâu mà không tìm thấy.
Dialogue: 0,0:41:40.03,0:41:43.84,Default,,0,0,0,,Hình như ta làm mất nó rồi, xin lỗi chàng.
Dialogue: 0,0:41:44.78,0:41:48.76,Default,,0,0,0,,♪Để trả cho người, để nợ ta♪
Dialogue: 0,0:41:48.76,0:41:50.51,Default,,0,0,0,,Nàng khiến mình thành ra thế này
Dialogue: 0,0:41:52.23,0:41:54.07,Default,,0,0,0,,là vì nhặt cục đá ấy sao?
Dialogue: 0,0:41:54.54,0:41:57.90,Default,,0,0,0,,♪Quanh quẩn bên ranh giới đắm chìm♪
Dialogue: 0,0:41:57.90,0:42:01.30,Default,,0,0,0,,♪Một trái tim bị yêu hận xé nát♪
Dialogue: 0,0:42:01.50,0:42:04.98,Default,,0,0,0,,♪Cũng không chịu bay xa♪
Dialogue: 0,0:42:04.98,0:42:09.02,Default,,0,0,0,,♪Biết được ánh mắt\Nkhắc vào tâm khảm của người♪
Dialogue: 0,0:42:09.02,0:42:12.30,Default,,0,0,0,,♪Như nhát kiếm xuyên tận xương tuỷ♪
Dialogue: 0,0:42:12.30,0:42:16.07,Default,,0,0,0,,♪Như duyên phận, như kiếp nạn♪
Dialogue: 0,0:42:16.07,0:42:17.40,Default,,0,0,0,,Ta đã nhặt nó về rồi.
Dialogue: 0,0:42:19.42,0:42:22.66,Default,,0,0,0,,♪Không được hoá giải♪
Dialogue: 0,0:42:31.23,0:42:32.23,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:42:34.03,0:42:35.00,Default,,0,0,0,,cảm ơn chàng.
Dialogue: 0,0:42:49.67,0:42:52.84,Default,,0,0,0,,Diệp Tịch Vụ, còn một việc kỳ lạ nữa
Dialogue: 0,0:42:53.88,0:42:55.80,Default,,0,0,0,,mà ta chưa từng nói với ai khác.
Dialogue: 0,0:42:56.40,0:42:59.15,Default,,0,0,0,,Xưa nay ta chưa từng nằm mơ,
Dialogue: 0,0:43:00.48,0:43:03.36,Default,,0,0,0,,nhưng mỗi khi\Nta gặp nguy hiểm đến tính mạng,
Dialogue: 0,0:43:04.36,0:43:06.03,Default,,0,0,0,,ta đều sẽ nghe thấy một giọng nói
Dialogue: 0,0:43:07.71,0:43:10.15,Default,,0,0,0,,lạnh nhạt vô tình trong mơ.
Dialogue: 0,0:43:11.71,0:43:12.96,Default,,0,0,0,,[Là Ma Thần.]
Dialogue: 0,0:43:13.50,0:43:17.22,Default,,0,0,0,,♪Dùng sự ngọt ngào\Ntrong nụ cười nhạt của người♪
Dialogue: 0,0:43:17.50,0:43:20.10,Default,,0,0,0,,♪Vị mặn trong nước mắt ta♪
Dialogue: 0,0:43:20.74,0:43:25.84,Default,,0,0,0,,♪Để trả cho người, để nợ ta♪
Dialogue: 0,0:43:25.84,0:43:28.55,Default,,0,0,0,,Chàng đừng sợ, ta sẽ ở bên chàng.
Dialogue: 0,0:43:29.80,0:43:31.32,Default,,0,0,0,,Nếu nó còn xuất hiện,
Dialogue: 0,0:43:32.15,0:43:33.23,Default,,0,0,0,,ta sẽ đánh thức chàng.
Dialogue: 0,0:43:33.70,0:43:37.06,Default,,0,0,0,,♪Một trái tim bị yêu hận xé nát♪
Dialogue: 0,0:43:37.76,0:43:38.59,Default,,0,0,0,,Nàng yên tâm,
Dialogue: 0,0:43:41.19,0:43:43.15,Default,,0,0,0,,đã lâu lắm rồi nó không xuất hiện lại.
Dialogue: 0,0:43:44.51,0:43:47.11,Default,,0,0,0,,Huống hồ lúc này,
Dialogue: 0,0:43:48.32,0:43:49.96,Default,,0,0,0,,trong giấc mơ của ta chỉ có nàng.
Dialogue: 0,0:43:54.71,0:43:58.00,Default,,0,0,0,,[Đàm Đài Tẫn, cho dù cuối cùng có thế nào]
Dialogue: 0,0:43:58.92,0:44:00.76,Default,,0,0,0,,[thì trước khi khoảnh khắc ấy ập tới,]
Dialogue: 0,0:44:02.63,0:44:04.07,Default,,0,0,0,,[ta sẽ luôn ở bên chàng.]
Dialogue: 0,0:44:19.80,0:44:20.71,Default,,0,0,0,,Diệp Tịch Vụ.
Dialogue: 0,0:44:21.40,0:44:22.71,Default,,0,0,0,,Trẫm đang tính
Dialogue: 0,0:44:23.59,0:44:25.19,Default,,0,0,0,,hay là cất nhắc nàng chút đỉnh,
Dialogue: 0,0:44:25.67,0:44:27.48,Default,,0,0,0,,nàng có thể tự do ra vào cung,
Dialogue: 0,0:44:27.59,0:44:29.36,Default,,0,0,0,,cũng có thể tự do về nhà thăm người thân.
Dialogue: 0,0:44:33.00,0:44:34.67,Default,,0,0,0,,Bệ hạ chuẩn bị thăng quan gì cho ta đây?
Dialogue: 0,0:44:34.80,0:44:35.44,Default,,0,0,0,,Nói ta nghe xem.
Dialogue: 0,0:44:37.88,0:44:41.67,Default,,0,0,0,,Chi bằng ta phong nàng\Nlàm thị nữ hầu hạ trong phòng ngủ nhé?
Dialogue: 0,0:44:41.88,0:44:43.84,Default,,0,0,0,,Cho phép nàng\Ntrải chăn dưới đất cạnh giường trẫm.
Dialogue: 0,0:44:46.00,0:44:46.92,Default,,0,0,0,,Vậy thì thôi,
Dialogue: 0,0:44:46.92,0:44:47.84,Default,,0,0,0,,ngủ trên chiếc giường cứng kia của ta
Dialogue: 0,0:44:47.84,0:44:49.51,Default,,0,0,0,,dù sao cũng thoải mái hơn sàn nhà nhiều.
Dialogue: 0,0:44:51.67,0:44:53.71,Default,,0,0,0,,Vậy trẫm sẽ trải chăn dưới đất chỗ nàng.
Dialogue: 0,0:44:56.92,0:44:57.51,Default,,0,0,0,,Được thôi,
Dialogue: 0,0:44:57.80,0:45:00.11,Default,,0,0,0,,nếu bệ hạ đã chân thành\Nmuốn thăng quan cho ta
Dialogue: 0,0:45:00.11,0:45:02.23,Default,,0,0,0,,thì ta miễn cưỡng chấp nhận vậy.
Dialogue: 0,0:45:02.44,0:45:03.23,Default,,0,0,0,,Vậy mới đúng chứ.
Dialogue: 0,0:45:06.84,0:45:08.71,Default,,0,0,0,,Bệ hạ, không còn sớm nữa,
Dialogue: 0,0:45:08.96,0:45:10.11,Default,,0,0,0,,chàng nên về ngủ đi.
Dialogue: 0,0:45:10.44,0:45:11.76,Default,,0,0,0,,Trẫm còn chưa vẽ xong mà.
Dialogue: 0,0:45:15.88,0:45:16.71,Default,,0,0,0,,Chờ lát nữa đi.
Dialogue: 0,0:45:22.23,0:45:25.03,Default,,0,0,0,,Đây là trẫm, đây là nàng.
Dialogue: 0,0:45:55.55,0:45:56.23,Default,,0,0,0,,Diệp tướng quân,
Dialogue: 0,0:45:56.71,0:45:58.28,Default,,0,0,0,,nước nóng tắm rửa của ngài\Nđã được đun xong rồi ạ.
Dialogue: 0,0:45:58.48,0:46:00.19,Default,,0,0,0,,Đa tạ, lui xuống đi.
Dialogue: 0,0:46:00.55,0:46:01.07,Default,,0,0,0,,Vâng.
Dialogue: 0,0:46:35.63,0:46:36.71,Default,,0,0,0,,Cô ở đây làm gì?
Dialogue: 0,0:46:38.23,0:46:39.84,Default,,0,0,0,,Dĩ nhiên là tới tắm rồi.
Dialogue: 0,0:46:39.88,0:46:40.40,Default,,0,0,0,,Ta…
Dialogue: 0,0:46:43.00,0:46:44.96,Default,,0,0,0,,Chẳng lẽ trong phủ của cô\Nkhông có nước nóng?
Dialogue: 0,0:46:44.96,0:46:47.32,Default,,0,0,0,,Có thì có, chỉ là…
Dialogue: 0,0:46:49.84,0:46:51.80,Default,,0,0,0,,câu hỏi lần trước ta hỏi ngươi,
Dialogue: 0,0:46:52.40,0:46:53.96,Default,,0,0,0,,ngươi suy nghĩ đến đâu rồi?
Dialogue: 0,0:47:24.28,0:47:25.40,Default,,0,0,0,,Diệp Thanh Vũ,
Dialogue: 0,0:47:26.71,0:47:28.88,Default,,0,0,0,,rốt cuộc ngươi có phải nam nhân không vậy?
Dialogue: 0,0:47:30.55,0:47:31.23,Default,,0,0,0,,Phiên Nhiên,
Dialogue: 0,0:47:31.88,0:47:33.67,Default,,0,0,0,,từ khi cô cứu mạng ta,
Dialogue: 0,0:47:33.67,0:47:35.48,Default,,0,0,0,,tình cảm của ta với cô chưa hề thay đổi,
Dialogue: 0,0:47:35.84,0:47:36.92,Default,,0,0,0,,ta không cần biết cô là người hay yêu,
Dialogue: 0,0:47:36.92,0:47:37.76,Default,,0,0,0,,đã từng trải qua những gì,
Dialogue: 0,0:47:37.76,0:47:39.11,Default,,0,0,0,,những điều đó đều không quan trọng với ta.
Dialogue: 0,0:47:50.19,0:47:51.11,Default,,0,0,0,,Diệp Thanh Vũ,
Dialogue: 0,0:47:54.76,0:47:56.71,Default,,0,0,0,,ngươi đúng là đồ ngốc.
Dialogue: 0,0:47:57.15,0:47:57.92,Default,,0,0,0,,Được rồi,
Dialogue: 0,0:47:58.88,0:48:01.32,Default,,0,0,0,,nể tình ngươi ngốc nghếch lâu như vậy,
Dialogue: 0,0:48:01.96,0:48:05.40,Default,,0,0,0,,ta sẽ từ bi nói cho ngươi biết một chuyện.
Dialogue: 0,0:48:05.55,0:48:07.80,Default,,0,0,0,,Ngươi từng tu luyện ở Tiêu Dao Tông,
Dialogue: 0,0:48:08.07,0:48:09.63,Default,,0,0,0,,có nghe nói đến tơ tình không?
Dialogue: 0,0:48:15.44,0:48:18.15,Default,,0,0,0,,Vạn vật có linh trí thì sẽ có tơ tình,
Dialogue: 0,0:48:19.71,0:48:22.44,Default,,0,0,0,,không có tơ tình thì không thể yêu một ai.
Dialogue: 0,0:48:26.71,0:48:29.48,Default,,0,0,0,,Ta đã từng thành thân với một người,
Dialogue: 0,0:48:30.28,0:48:31.36,Default,,0,0,0,,hắn tên là Khương Nhiêu.
Dialogue: 0,0:48:32.00,0:48:34.07,Default,,0,0,0,,Ta đã đưa tơ tình của mình cho hắn,
Dialogue: 0,0:48:34.71,0:48:37.19,Default,,0,0,0,,sau đó hắn lên chiến trường,
Dialogue: 0,0:48:38.48,0:48:39.67,Default,,0,0,0,,mất mạng ở bên ngoài,
Dialogue: 0,0:48:42.76,0:48:44.55,Default,,0,0,0,,tơ tình của ta cũng mất.
Dialogue: 0,0:48:54.67,0:48:58.23,Default,,0,0,0,,Ngươi và hắn trông rất giống nhau,
Dialogue: 0,0:48:58.63,0:49:00.28,Default,,0,0,0,,hắn cũng là một tên lính ngốc,
Dialogue: 0,0:49:01.23,0:49:03.88,Default,,0,0,0,,quanh năm suốt tháng đều ở sa trường.
Dialogue: 0,0:49:03.88,0:49:06.11,Default,,0,0,0,,Vậy là ngay từ đầu cô đã…
Dialogue: 0,0:49:06.15,0:49:06.88,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:49:07.23,0:49:09.59,Default,,0,0,0,,Nếu không phải góc nghiêng của ngươi\Ntrông giống hắn như vậy
Dialogue: 0,0:49:09.59,0:49:11.40,Default,,0,0,0,,thì sao ta phải tốn yêu lực,
Dialogue: 0,0:49:11.40,0:49:12.88,Default,,0,0,0,,rước nợ vào thân để cứu ngươi?
Dialogue: 0,0:49:14.23,0:49:17.15,Default,,0,0,0,,Nay ta đã không còn tơ tình,
Dialogue: 0,0:49:17.96,0:49:19.76,Default,,0,0,0,,không thể yêu ai khác nữa,
Dialogue: 0,0:49:20.00,0:49:22.51,Default,,0,0,0,,nhưng nể tình\Nngươi trông giống hắn như vậy,
Dialogue: 0,0:49:24.28,0:49:25.96,Default,,0,0,0,,ta cho ngươi hai lựa chọn.
Dialogue: 0,0:49:26.07,0:49:28.15,Default,,0,0,0,,Nếu ta cứ muốn ở bên cô sớm tối thì sao?
Dialogue: 0,0:49:39.59,0:49:40.36,Default,,0,0,0,,Được thôi,
Dialogue: 0,0:49:42.19,0:49:44.15,Default,,0,0,0,,vậy ngươi đừng dùng tên Diệp Thanh Vũ nữa,
Dialogue: 0,0:49:47.63,0:49:49.40,Default,,0,0,0,,chi bằng đổi tên thành Khương Nhiêu đi.
Dialogue: 0,0:49:54.32,0:49:57.88,Default,,0,0,0,,Sao vậy?\NĐến việc đổi tên cũng không chịu à?
Dialogue: 0,0:49:59.40,0:50:01.00,Default,,0,0,0,,Vậy mà dám nói trong lòng ngươi có ta.
Dialogue: 0,0:50:10.32,0:50:11.15,Default,,0,0,0,,Phiên Nhiên,
Dialogue: 0,0:50:13.03,0:50:14.63,Default,,0,0,0,,nếu ta thực sự đồng ý với cô
Dialogue: 0,0:50:16.00,0:50:17.67,Default,,0,0,0,,thì không chỉ sỉ nhục bản thân ta
Dialogue: 0,0:50:22.59,0:50:24.96,Default,,0,0,0,,mà còn vấy bẩn mối tình\Ncủa cô và Khương Nhiêu.
Dialogue: 0,0:50:34.48,0:50:35.48,Default,,0,0,0,,Diệp Thanh Vũ,
Dialogue: 0,0:50:36.96,0:50:38.84,Default,,0,0,0,,ta vốn tưởng ngươi là kẻ đần độn,
Dialogue: 0,0:50:41.00,0:50:42.63,Default,,0,0,0,,không ngờ ngươi lại là một tên điên.
Dialogue: 0,0:50:47.63,0:50:50.55,Default,,0,0,0,,Được rồi, nếu ngươi đã không đồng ý,
Dialogue: 0,0:50:51.96,0:50:53.32,Default,,0,0,0,,trên đời này thiếu gì đàn ông
Dialogue: 0,0:50:53.32,0:50:54.80,Default,,0,0,0,,chịu chơi đùa phong lưu cùng ta.
Dialogue: 0,0:50:59.32,0:51:00.44,Default,,0,0,0,,Thứ lỗi cho ta không tiếp ngươi được.
Dialogue: 0,0:52:23.19,0:52:23.84,Default,,0,0,0,,Bệ hạ.
Dialogue: 0,0:52:27.84,0:52:30.48,Default,,0,0,0,,Hôm nay con hồ ly nhà cô\Nlại giữ lễ nghĩa vậy.
Dialogue: 0,0:52:31.19,0:52:34.19,Default,,0,0,0,,Sao thế? Có gì cầu xin trẫm à?
Dialogue: 0,0:52:37.03,0:52:39.84,Default,,0,0,0,,Bệ hạ, nay nước Cảnh bại trận,
Dialogue: 0,0:52:40.00,0:52:41.28,Default,,0,0,0,,thiên hạ sắp thống nhất,
Dialogue: 0,0:52:41.28,0:52:43.00,Default,,0,0,0,,sự nghiệp to lớn của bệ hạ đã thành công,
Dialogue: 0,0:52:43.07,0:52:45.59,Default,,0,0,0,,Phiên Nhiên tự thấy\Nmình đã luôn tận trung với cương vị,
Dialogue: 0,0:52:46.07,0:52:47.92,Default,,0,0,0,,dù không có công lao\Ncũng đã nỗ lực vất vả,
Dialogue: 0,0:52:49.36,0:52:52.59,Default,,0,0,0,,nay ta muốn xin bệ hạ ban thưởng.
Dialogue: 0,0:52:53.76,0:52:56.15,Default,,0,0,0,,Nói đi, cô muốn gì?
Dialogue: 0,0:52:56.40,0:52:58.67,Default,,0,0,0,,Phiên Nhiên\Nchỉ là một con hồ ly trong núi sâu,
Dialogue: 0,0:52:58.92,0:53:00.84,Default,,0,0,0,,bình sinh hận nhất\Nviệc bị người ta ép buộc,
Dialogue: 0,0:53:01.36,0:53:03.15,Default,,0,0,0,,xin bệ hạ giải bí dược cho ta,
Dialogue: 0,0:53:03.48,0:53:04.48,Default,,0,0,0,,thả ta được tự do.
Dialogue: 0,0:53:09.40,0:53:10.63,Default,,0,0,0,,Cô muốn đi à?
Dialogue: 0,0:53:12.96,0:53:14.44,Default,,0,0,0,,Cũng to gan đấy.
Dialogue: 0,0:53:19.96,0:53:22.84,Default,,0,0,0,,Nhưng nếu cô đi rồi
Dialogue: 0,0:53:25.55,0:53:27.76,Default,,0,0,0,,thì e Diệp Tịch Vụ sẽ không vui đâu.
Dialogue: 0,0:53:28.71,0:53:32.76,Default,,0,0,0,,Ta… ta… không phải ta\Nđịnh mai danh ẩn tích đâu,
Dialogue: 0,0:53:33.48,0:53:35.19,Default,,0,0,0,,nếu Diệp nhị tiểu thư muốn gặp ta
Dialogue: 0,0:53:35.55,0:53:37.55,Default,,0,0,0,,thì ắt sẽ có cách gặp được thôi.
Dialogue: 0,0:53:39.63,0:53:40.36,Default,,0,0,0,,Xem ra
Dialogue: 0,0:53:42.51,0:53:44.19,Default,,0,0,0,,cô đã quyết tâm muốn đi rồi.
Dialogue: 0,0:53:48.59,0:53:50.00,Default,,0,0,0,,Phiên Nhiên ơi là Phiên Nhiên.
Dialogue: 0,0:53:50.71,0:53:52.23,Default,,0,0,0,,Chẳng lẽ nước Cảnh rộng lớn này
Dialogue: 0,0:53:52.63,0:53:54.76,Default,,0,0,0,,không có gì đáng để cô lưu luyến hay sao?
Dialogue: 0,0:54:02.76,0:54:04.07,Default,,0,0,0,,Xem ra là có.
Dialogue: 0,0:54:05.28,0:54:06.28,Default,,0,0,0,,Không, không, khoan đã.
Dialogue: 0,0:54:06.32,0:54:07.44,Default,,0,0,0,,Trẫm đã đưa thuốc giải của cô
Dialogue: 0,0:54:07.96,0:54:09.48,Default,,0,0,0,,cho Diệp Thanh Vũ rồi.
Dialogue: 0,0:54:10.55,0:54:11.67,Default,,0,0,0,,Ngài đưa hắn làm gì?
Dialogue: 0,0:54:12.15,0:54:13.36,Default,,0,0,0,,Đó là điểm yếu của ta mà.
Dialogue: 0,0:54:13.59,0:54:15.71,Default,,0,0,0,,Sáng sớm nay hắn đã đến đòi trẫm rồi.
Dialogue: 0,0:54:16.23,0:54:18.15,Default,,0,0,0,,Diệp Thanh Vũ biết ta muốn đi ư?
Dialogue: 0,0:54:18.40,0:54:20.76,Default,,0,0,0,,Diệp đại tướng quân cần cù chăm chỉ,
Dialogue: 0,0:54:20.88,0:54:23.44,Default,,0,0,0,,mới sáng đã quỳ trước mặt trẫm thề thốt,
Dialogue: 0,0:54:23.55,0:54:24.59,Default,,0,0,0,,trẫm bèn đưa cho hắn.
Dialogue: 0,0:54:25.11,0:54:27.03,Default,,0,0,0,,Nếu cô muốn uống thuốc giải\Nrồi đi khỏi đây
Dialogue: 0,0:54:27.03,0:54:28.07,Default,,0,0,0,,thì cứ tìm hắn đi.
Dialogue: 0,0:54:28.28,0:54:28.92,Default,,0,0,0,,Ngài…
Dialogue: 0,0:54:31.15,0:54:32.55,Default,,0,0,0,,Đàm Đài Tẫn, đồ khốn này!
Dialogue: 0,0:54:33.07,0:54:34.63,Default,,0,0,0,,Ta chúc ngài cô độc đến già!
Dialogue: 0,0:54:36.32,0:54:36.80,Default,,0,0,0,,Cô…
Dialogue: 0,0:54:40.51,0:54:41.88,Default,,0,0,0,,Con hồ ly này nóng tính quá.
Dialogue: 0,0:54:50.60,0:54:55.54,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:55:10.56,0:55:18.32,Default,,0,0,0,,♪Nỗi lòng phàm tục\Nlà ngước mắt lên trăng bỗng khuyết♪
Dialogue: 0,0:55:18.32,0:55:26.12,Default,,0,0,0,,♪Hồng trần là đôi mắt thấy\Nmuôn hoa rụng giữa cơn mưa tuyết♪
Dialogue: 0,0:55:26.12,0:55:33.24,Default,,0,0,0,,♪Trắc ẩn là\Nmột cánh bướm trong lòng khi tan biến♪
Dialogue: 0,0:55:33.84,0:55:37.72,Default,,0,0,0,,♪Tỉnh ngộ là gột rửa hồi ức\Ntrong nước đục♪
Dialogue: 0,0:55:37.72,0:55:41.92,Default,,0,0,0,,♪Từ ấy chẳng gặp nhau♪
Dialogue: 0,0:55:43.48,0:55:47.08,Default,,0,0,0,,♪Ta từng thấy lời dịu dàng, từng nở hoa♪
Dialogue: 0,0:55:47.08,0:55:50.32,Default,,0,0,0,,♪Cay mắt đến nỗi nói mớ♪
Dialogue: 0,0:55:50.88,0:55:55.00,Default,,0,0,0,,♪Tơ tình vấn vương, mái ngói dễ vỡ♪
Dialogue: 0,0:55:55.00,0:55:58.52,Default,,0,0,0,,♪Một vòng tay có sự sợ hãi vô tận♪
Dialogue: 0,0:55:59.12,0:56:02.56,Default,,0,0,0,,♪Ta kính trọng người biết bao,\Nthời gian thấm thoát thoi đưa♪
Dialogue: 0,0:56:02.56,0:56:06.24,Default,,0,0,0,,♪Từng vững tin được yêu trong phút chốc♪
Dialogue: 0,0:56:06.32,0:56:10.44,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:56:10.44,0:56:18.20,Default,,0,0,0,,♪Sự thành kính tựa ánh trăng không tì vết♪
Dialogue: 0,0:56:20.20,0:56:23.60,Default,,0,0,0,,♪Hãy lắng nghe hơi thở của đóa hoa♪
Dialogue: 0,0:56:23.72,0:56:27.12,Default,,0,0,0,,♪Như sự phồn hoa của chúng sinh muôn loài♪
Dialogue: 0,0:56:27.68,0:56:31.88,Default,,0,0,0,,♪Dẫu đi bao lâu, sao trời hay bão cát♪
Dialogue: 0,0:56:31.88,0:56:36.08,Default,,0,0,0,,♪Ánh trăng là bộ giáp của ta♪
Dialogue: 0,0:56:36.08,0:56:39.40,Default,,0,0,0,,♪Ta mong sau này người mang theo vết sẹo♪
Dialogue: 0,0:56:39.40,0:56:43.36,Default,,0,0,0,,♪Cũng thử sống dịu dàng một phen♪
Dialogue: 0,0:56:43.52,0:56:47.04,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:56:47.04,0:56:54.68,Default,,0,0,0,,♪Yêu lại người từng căm hận♪
Dialogue: 0,0:56:54.68,0:57:02.08,Default,,0,0,0,,♪Kiếp phù du nhỏ, giấc mộng lớn♪
Dialogue: 0,0:57:02.08,0:57:10.72,Default,,0,0,0,,♪Xin đừng phụ lòng nhau♪
