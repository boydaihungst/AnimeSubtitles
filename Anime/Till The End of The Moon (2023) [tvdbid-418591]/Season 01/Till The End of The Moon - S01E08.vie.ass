Dialogue: 0,0:00:23.20,0:00:26.96,Default,,0,0,0,,♪Đêm tối, trăng ướt, máu lạnh♪
Dialogue: 0,0:00:27.40,0:00:30.72,Default,,0,0,0,,♪Phơi bày trước\Nđôi mắt sợ ánh sáng của ta♪
Dialogue: 0,0:00:31.04,0:00:34.48,Default,,0,0,0,,♪Là sáng bừng hay ấm áp♪
Dialogue: 0,0:00:34.68,0:00:38.04,Default,,0,0,0,,♪Ta chỉ có thể suy đoán bằng trực giác♪
Dialogue: 0,0:00:38.92,0:00:46.16,Default,,0,0,0,,♪Ôi, tình yêu khuynh thế như ngọc,\Ntạo nên ta♪
Dialogue: 0,0:00:46.72,0:00:53.88,Default,,0,0,0,,♪Ôi, tơ tình vương vấn♪
Dialogue: 0,0:00:55.36,0:00:58.92,Default,,0,0,0,,♪Ta không sợ trên cõi đời này♪
Dialogue: 0,0:00:59.28,0:01:02.80,Default,,0,0,0,,♪Chúng sinh đối xử với ta ra sao♪
Dialogue: 0,0:01:03.44,0:01:06.60,Default,,0,0,0,,♪Đột phá, vùng vẫy♪
Dialogue: 0,0:01:06.92,0:01:11.20,Default,,0,0,0,,♪Làm sao để phân biệt chính tà, thiện ác♪
Dialogue: 0,0:01:11.64,0:01:14.92,Default,,0,0,0,,♪Từng có khoảnh khắc yếu đuối♪
Dialogue: 0,0:01:15.28,0:01:18.64,Default,,0,0,0,,♪Dùng nụ hôn tình yêu\Nđể vết thương lành lại♪
Dialogue: 0,0:01:19.16,0:01:22.60,Default,,0,0,0,,♪Sự tồn tại của ta♪
Dialogue: 0,0:01:23.12,0:01:29.64,Default,,0,0,0,,♪Sẽ không vì gai nhọn mà gãy cánh♪
Dialogue: 0,0:01:31.40,0:01:36.04,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:01:36.04,0:01:39.00,Default,,0,0,0,,[Tập 8]
Dialogue: 0,0:01:39.04,0:01:40.28,Default,,0,0,0,,Rốt cuộc tại sao Oánh Tâm lại phát điên?
Dialogue: 0,0:01:40.28,0:01:41.35,Default,,0,0,0,,Là ngươi hại bà ấy.
Dialogue: 0,0:01:41.35,0:01:42.56,Default,,0,0,0,,Ả cấu kết với Đàm Đài Minh Lãng,
Dialogue: 0,0:01:42.56,0:01:43.71,Default,,0,0,0,,muốn giết hại ta.
Dialogue: 0,0:01:44.12,0:01:45.71,Default,,0,0,0,,Chẳng lẽ ta không thể phản kháng?
Dialogue: 0,0:01:47.71,0:01:48.95,Default,,0,0,0,,Minh Lãng điện hạ nói,
Dialogue: 0,0:01:49.40,0:01:52.48,Default,,0,0,0,,tốt nhất phải khiến con tin\Nmãi mãi không thể rời cổng cung.
Dialogue: 0,0:01:52.95,0:01:55.51,Default,,0,0,0,,Đàm Đài Minh Lãng muốn ta giết ngài ấy?
Dialogue: 0,0:01:58.23,0:01:58.87,Default,,0,0,0,,Oánh Tâm.
Dialogue: 0,0:01:59.35,0:02:00.07,Default,,0,0,0,,Ngươi có nhớ
Dialogue: 0,0:02:00.56,0:02:02.28,Default,,0,0,0,,dưới gốc cây ngoài cửa\Ncó chôn một bình rượu vua ban.
Dialogue: 0,0:02:03.07,0:02:05.48,Default,,0,0,0,,Nay cuối cùng chúng ta cũng có thể\Nrời vương cung nước Thịnh rồi.
Dialogue: 0,0:02:05.76,0:02:08.71,Default,,0,0,0,,Chi bằng ngươi ra đào nó lên đi.
Dialogue: 0,0:02:17.31,0:02:19.52,Default,,0,0,0,,[Cô ta bỏ thuốc mê vào cơm canh của ta,]
Dialogue: 0,0:02:20.31,0:02:21.84,Default,,0,0,0,,[muốn nhân lúc ta hôn mê,]
Dialogue: 0,0:02:21.84,0:02:24.36,Default,,0,0,0,,[gọi người của Đàm Đài Minh Lãng\Ntới siết cổ ta,]
Dialogue: 0,0:02:24.52,0:02:26.19,Default,,0,0,0,,[rồi ngụy tạo thành tự sát.]
Dialogue: 0,0:02:26.24,0:02:27.28,Default,,0,0,0,,Xin lỗi điện hạ.
Dialogue: 0,0:02:28.00,0:02:28.91,Default,,0,0,0,,Oánh Tâm đã hại ngài.
Dialogue: 0,0:02:29.00,0:02:30.00,Default,,0,0,0,,Xin lỗi điện hạ.
Dialogue: 0,0:02:31.68,0:02:32.96,Default,,0,0,0,,[Ta đổi bát đũa,]
Dialogue: 0,0:02:33.43,0:02:34.63,Default,,0,0,0,,[giả vờ hôn mê.]
Dialogue: 0,0:02:35.28,0:02:35.87,Default,,0,0,0,,Xin lỗi điện hạ.
Dialogue: 0,0:02:35.87,0:02:37.71,Default,,0,0,0,,[Thuốc phát tác lúc cô ta]
Dialogue: 0,0:02:38.00,0:02:39.00,Default,,0,0,0,,[đi tìm đồng bọn,]
Dialogue: 0,0:02:39.80,0:02:41.28,Default,,0,0,0,,[cô ta ngất ở hành lang cung.]
Dialogue: 0,0:02:43.96,0:02:46.75,Default,,0,0,0,,[Ngô tổng quản luôn thích\Nhoạnh họe, hạ nhục bọn ta.]
Dialogue: 0,0:02:48.24,0:02:51.03,Default,,0,0,0,,[Hôm đó ông ta và các thái giám\Nđi ngang qua,]
Dialogue: 0,0:02:51.36,0:02:52.96,Default,,0,0,0,,[thừa cơ đưa Oánh Tâm đi,]
Dialogue: 0,0:02:53.71,0:02:54.63,Default,,0,0,0,,[làm nhục cô ta.]
Dialogue: 0,0:02:55.87,0:02:58.36,Default,,0,0,0,,[Oánh Tâm đã bị điên từ đó.]
Dialogue: 0,0:02:59.24,0:03:01.68,Default,,0,0,0,,Vốn ta chỉ muốn\Nkhiến cô ta gieo gió gặt bão.
Dialogue: 0,0:03:02.43,0:03:04.47,Default,,0,0,0,,Có trách thì trách lòng dạ cô ta yếu đuối.
Dialogue: 0,0:03:05.43,0:03:07.31,Default,,0,0,0,,Nếu lúc đó cô ta dùng thuốc độc
Dialogue: 0,0:03:07.31,0:03:08.68,Default,,0,0,0,,mà không phải thuốc mê,
Dialogue: 0,0:03:09.08,0:03:11.03,Default,,0,0,0,,cô ta cũng không cần\Nphải chịu những đau khổ đó.
Dialogue: 0,0:03:11.80,0:03:13.24,Default,,0,0,0,,[Đúng là Nguyệt Oánh Tâm sai trước,]
Dialogue: 0,0:03:13.63,0:03:15.80,Default,,0,0,0,,[nhưng hắn không hề\Nđộng lòng trắc ẩn với cô ta,]
Dialogue: 0,0:03:15.87,0:03:17.19,Default,,0,0,0,,[cứ như là người xa lạ.]
Dialogue: 0,0:03:17.68,0:03:19.63,Default,,0,0,0,,[Chẳng lẽ bản chất của Ma Thần\Nlà trời sinh vô tình,]
Dialogue: 0,0:03:20.24,0:03:21.24,Default,,0,0,0,,[không thể cứu vãn sao?]
Dialogue: 0,0:03:21.87,0:03:22.59,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:03:23.87,0:03:25.52,Default,,0,0,0,,Ta thật sự hối hận vì đã cứu ngươi.
Dialogue: 0,0:03:26.19,0:03:27.03,Default,,0,0,0,,Diệp Tịch Vụ,
Dialogue: 0,0:03:28.68,0:03:29.91,Default,,0,0,0,,trước kia ta luôn cho rằng
Dialogue: 0,0:03:29.91,0:03:31.24,Default,,0,0,0,,ta là người có lỗi.
Dialogue: 0,0:03:31.75,0:03:33.31,Default,,0,0,0,,Nhưng bây giờ ta đã hiểu ra,
Dialogue: 0,0:03:33.96,0:03:35.19,Default,,0,0,0,,không phải là ta sai,
Dialogue: 0,0:03:36.75,0:03:38.08,Default,,0,0,0,,mà là thói đời này sai.
Dialogue: 0,0:03:39.68,0:03:43.63,Default,,0,0,0,,Vậy nên ta sẽ không tha cho
Dialogue: 0,0:03:44.12,0:03:45.36,Default,,0,0,0,,bất kỳ kẻ nào từng lăng nhục ta,
Dialogue: 0,0:03:46.43,0:03:48.08,Default,,0,0,0,,muốn giết ta,
Dialogue: 0,0:03:53.63,0:03:54.43,Default,,0,0,0,,bao gồm cả cô.
Dialogue: 0,0:04:03.91,0:04:05.24,Default,,0,0,0,,[Không thể ngồi chờ chết được.]
Dialogue: 0,0:04:12.40,0:04:13.84,Default,,0,0,0,,Hay cho một Diệp đại tướng quân!
Dialogue: 0,0:04:15.87,0:04:17.27,Default,,0,0,0,,Ban đầu con gái bảo bối của khanh
Dialogue: 0,0:04:17.51,0:04:18.39,Default,,0,0,0,,vô liêm sỉ,
Dialogue: 0,0:04:18.39,0:04:20.04,Default,,0,0,0,,cầu hòa với thế tử nước Cảnh đó.
Dialogue: 0,0:04:20.27,0:04:21.60,Default,,0,0,0,,Trẫm nể mặt khanh,
Dialogue: 0,0:04:21.75,0:04:23.48,Default,,0,0,0,,mới đồng ý\Ncho Đàm Đài Tẫn thành hôn với cô ta,
Dialogue: 0,0:04:23.48,0:04:25.24,Default,,0,0,0,,rời khỏi vương cung vào Diệp gia ở.
Dialogue: 0,0:04:25.31,0:04:27.04,Default,,0,0,0,,Không ngờ mới thành hôn chưa đầy một năm,
Dialogue: 0,0:04:27.19,0:04:28.92,Default,,0,0,0,,khanh lại nói với trẫm rằng,\Nhắn bỏ chạy rồi.
Dialogue: 0,0:04:30.19,0:04:31.51,Default,,0,0,0,,Xin bệ hạ trị tội.
Dialogue: 0,0:04:31.72,0:04:32.36,Default,,0,0,0,,Trị tội?
Dialogue: 0,0:04:34.43,0:04:36.60,Default,,0,0,0,,Dù sao Đàm Đài Tẫn
Dialogue: 0,0:04:36.60,0:04:37.51,Default,,0,0,0,,cũng là con tin mà năm xưa
Dialogue: 0,0:04:37.51,0:04:39.24,Default,,0,0,0,,Diệp đại tướng quân chiến đấu anh dũng\Ntrên chiến trường
Dialogue: 0,0:04:39.24,0:04:40.48,Default,,0,0,0,,mới bắt về được.
Dialogue: 0,0:04:40.75,0:04:41.80,Default,,0,0,0,,Nay khanh muốn thả hắn,
Dialogue: 0,0:04:42.16,0:04:43.31,Default,,0,0,0,,sao trẫm dám xen vào chứ?
Dialogue: 0,0:04:45.83,0:04:48.68,Default,,0,0,0,,Lão thần biết bệ hạ tức giận mới nói vậy.
Dialogue: 0,0:04:49.16,0:04:50.43,Default,,0,0,0,,Đàm Đài Tẫn bỏ trốn,
Dialogue: 0,0:04:50.43,0:04:51.63,Default,,0,0,0,,thần không tăng cường phòng bị,
Dialogue: 0,0:04:52.19,0:04:53.83,Default,,0,0,0,,quả thực là có tội trông coi tắc trách.
Dialogue: 0,0:04:54.16,0:04:56.19,Default,,0,0,0,,Nhưng thần tuyệt đối\Nkhông thông đồng với nước khác,
Dialogue: 0,0:04:56.19,0:04:57.56,Default,,0,0,0,,thả con tin đi.
Dialogue: 0,0:04:58.51,0:05:00.00,Default,,0,0,0,,Mong bệ hạ minh xét.
Dialogue: 0,0:05:00.00,0:05:01.07,Default,,0,0,0,,Đương nhiên trẫm phải xét cho rõ.
Dialogue: 0,0:05:01.12,0:05:02.19,Default,,0,0,0,,Khanh để xảy ra chuyện lớn như vậy,
Dialogue: 0,0:05:02.19,0:05:03.12,Default,,0,0,0,,khanh tự nhìn đi,
Dialogue: 0,0:05:03.12,0:05:04.56,Default,,0,0,0,,đây là tấu sớ vạch tội khanh
Dialogue: 0,0:05:04.56,0:05:05.92,Default,,0,0,0,,của bá quan văn võ khắp triều.
Dialogue: 0,0:05:07.43,0:05:08.72,Default,,0,0,0,,Thần có tội.
Dialogue: 0,0:05:11.39,0:05:12.12,Default,,0,0,0,,Thế này đi,
Dialogue: 0,0:05:12.83,0:05:14.87,Default,,0,0,0,,khanh tới Tam Pháp Ty chịu khổ vài ngày.
Dialogue: 0,0:05:16.48,0:05:18.31,Default,,0,0,0,,Thần lĩnh chỉ.
Dialogue: 0,0:05:19.43,0:05:20.04,Default,,0,0,0,,Bệ hạ,
Dialogue: 0,0:05:20.27,0:05:21.16,Default,,0,0,0,,phụ thân thần đã có tuổi,
Dialogue: 0,0:05:21.31,0:05:23.31,Default,,0,0,0,,người toàn vết thương cũ\Ndo chinh chiến vì nước,
Dialogue: 0,0:05:23.39,0:05:24.75,Default,,0,0,0,,quả thật không thể\Nchịu nỗi khổ lao ngục được.
Dialogue: 0,0:05:24.95,0:05:26.04,Default,,0,0,0,,Nếu bệ hạ muốn trách tội,
Dialogue: 0,0:05:26.36,0:05:27.68,Default,,0,0,0,,Thanh Vũ xin chịu tội thay phụ thân.
Dialogue: 0,0:05:27.95,0:05:29.12,Default,,0,0,0,,Diệp tiểu tướng quân yên tâm.
Dialogue: 0,0:05:30.16,0:05:31.75,Default,,0,0,0,,Đương nhiên trẫm biết nghĩ cho công thần.
Dialogue: 0,0:05:32.12,0:05:34.31,Default,,0,0,0,,Nhà lao ở Tam Pháp Ty\Nsạch sẽ, rộng rãi nhất.
Dialogue: 0,0:05:34.75,0:05:36.39,Default,,0,0,0,,Nếu khanh không muốn\Nphụ thân phải chịu khổ,
Dialogue: 0,0:05:36.72,0:05:38.07,Default,,0,0,0,,thì mau bắt con tin kia
Dialogue: 0,0:05:38.07,0:05:39.00,Default,,0,0,0,,về đây cho trẫm.
Dialogue: 0,0:05:39.07,0:05:41.31,Default,,0,0,0,,Làm vậy cũng có thể\Nrửa sạch hiềm nghi cho Diệp gia của khanh.
Dialogue: 0,0:05:41.31,0:05:43.56,Default,,0,0,0,,Trẫm cũng có cái để nói với\Nbá quan văn võ trong triều.
Dialogue: 0,0:05:43.75,0:05:44.63,Default,,0,0,0,,Nhưng trẫm cho khanh hay,
Dialogue: 0,0:05:45.12,0:05:46.16,Default,,0,0,0,,nếu không thể bắt sống,
Dialogue: 0,0:05:46.43,0:05:47.72,Default,,0,0,0,,thì mang thi thể về cũng được.
Dialogue: 0,0:05:47.95,0:05:50.27,Default,,0,0,0,,Tuyệt đối không được để Đàm Đài Tẫn\Nsống sót quay về nước Cảnh.
Dialogue: 0,0:05:50.83,0:05:52.83,Default,,0,0,0,,Thà giết nhầm còn hơn bỏ sót.
Dialogue: 0,0:05:56.51,0:05:57.31,Default,,0,0,0,,Thần lĩnh chỉ.
Dialogue: 0,0:05:58.16,0:05:59.43,Default,,0,0,0,,Tạ ơn bệ hạ nhân từ.
Dialogue: 0,0:06:11.63,0:06:12.87,Default,,0,0,0,,Mùi tanh nồng quá.
Dialogue: 0,0:06:13.72,0:06:14.83,Default,,0,0,0,,Trong này có gì?
Dialogue: 0,0:06:16.12,0:06:16.92,Default,,0,0,0,,Bẩm điện hạ,
Dialogue: 0,0:06:17.39,0:06:18.36,Default,,0,0,0,,tư tế bảo bọn ta
Dialogue: 0,0:06:18.36,0:06:19.60,Default,,0,0,0,,săn bắt yêu ma cho điện hạ.
Dialogue: 0,0:06:19.95,0:06:21.07,Default,,0,0,0,,Đây là yêu đan mới moi được.
Dialogue: 0,0:06:21.48,0:06:22.27,Default,,0,0,0,,Mời ngài dùng.
Dialogue: 0,0:07:08.48,0:07:09.83,Default,,0,0,0,,Điện hạ bảo ta mang cơm cho cô.
Dialogue: 0,0:07:14.60,0:07:15.68,Default,,0,0,0,,Sao ta biết được
Dialogue: 0,0:07:15.72,0:07:17.63,Default,,0,0,0,,các ngươi có bỏ độc vào cơm không chứ?
Dialogue: 0,0:07:17.95,0:07:19.04,Default,,0,0,0,,Điện hạ của chúng ta\Nngay thẳng đàng hoàng,
Dialogue: 0,0:07:19.83,0:07:20.92,Default,,0,0,0,,sao lại hạ độc cô được?
Dialogue: 0,0:07:22.00,0:07:24.19,Default,,0,0,0,,Điện hạ của các ngươi\Nngay thẳng đàng hoàng thật đấy.
Dialogue: 0,0:07:28.60,0:07:29.68,Default,,0,0,0,,Ngươi nhìn ta làm gì?
Dialogue: 0,0:07:29.68,0:07:30.60,Default,,0,0,0,,Ta phải thấy cô ăn.
Dialogue: 0,0:07:31.43,0:07:32.27,Default,,0,0,0,,Điện hạ dặn vậy.
Dialogue: 0,0:07:33.24,0:07:33.92,Default,,0,0,0,,Đại ca này,
Dialogue: 0,0:07:34.07,0:07:36.31,Default,,0,0,0,,tay ta bị trói rồi thì ăn kiểu gì?
Dialogue: 0,0:07:41.07,0:07:42.51,Default,,0,0,0,,Được, ta ăn.
Dialogue: 0,0:07:54.16,0:07:54.63,Default,,0,0,0,,Cô…
Dialogue: 0,0:07:55.00,0:07:57.00,Default,,0,0,0,,Ta đã bảo ta không cầm được rồi mà.
Dialogue: 0,0:08:07.95,0:08:09.19,Default,,0,0,0,,Xin lỗi đại ca nha.
Dialogue: 0,0:08:30.83,0:08:32.75,Default,,0,0,0,,[Phải nghĩ cách lấy được thuyền nhỏ.]
Dialogue: 0,0:08:34.27,0:08:34.96,Default,,0,0,0,,Có chuyện rồi.
Dialogue: 0,0:08:35.15,0:08:36.27,Default,,0,0,0,,Nguyệt Ảnh Vệ tập hợp nghe lệnh.
Dialogue: 0,0:08:37.24,0:08:37.87,Default,,0,0,0,,Nhanh lên.
Dialogue: 0,0:08:38.12,0:08:38.91,Default,,0,0,0,,Tập hợp nghe lệnh.
Dialogue: 0,0:08:39.91,0:08:41.39,Default,,0,0,0,,Nữ tù nhân bị giam ở thủy lao bỏ chạy rồi.
Dialogue: 0,0:08:42.63,0:08:44.20,Default,,0,0,0,,Không phải cô ta\Nbị trói bằng thừng Nhược Thủy à?
Dialogue: 0,0:08:44.27,0:08:45.79,Default,,0,0,0,,Cô ta không có lời chú\Nthì cởi trói kiểu gì được?
Dialogue: 0,0:08:47.87,0:08:50.20,Default,,0,0,0,,Bà tới tìm ta để làm gì?
Dialogue: 0,0:08:52.96,0:08:55.27,Default,,0,0,0,,Lời chú này có thể cởi được\Nthừng Nhược Thủy của cô.
Dialogue: 0,0:08:55.72,0:08:57.03,Default,,0,0,0,,Còn về việc cô có trốn thoát được không
Dialogue: 0,0:08:57.32,0:08:58.60,Default,,0,0,0,,thì phải xem bản lĩnh của cô rồi.
Dialogue: 0,0:08:59.36,0:09:00.24,Default,,0,0,0,,Vì sao lại muốn giúp ta?
Dialogue: 0,0:09:02.39,0:09:05.24,Default,,0,0,0,,Cô cứ coi như ta đang giúp bản thân đi.
Dialogue: 0,0:09:06.84,0:09:10.12,Default,,0,0,0,,[Rốt cuộc Kinh Lan An này muốn làm gì?]
Dialogue: 0,0:09:12.24,0:09:13.79,Default,,0,0,0,,[Phải nghĩ cách tránh bị lục soát đã.]
Dialogue: 0,0:09:46.44,0:09:47.00,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:09:49.08,0:09:50.67,Default,,0,0,0,,Nghe nói điện hạ đã nuốt yêu đan
Dialogue: 0,0:09:51.03,0:09:51.84,Default,,0,0,0,,nên ta tới xem sao.
Dialogue: 0,0:09:54.00,0:09:55.27,Default,,0,0,0,,Điện hạ ra nhiều mồ hôi quá,
Dialogue: 0,0:09:56.24,0:09:57.32,Default,,0,0,0,,ngài có thấy khó chịu ở đâu không?
Dialogue: 0,0:10:03.79,0:10:04.51,Default,,0,0,0,,Ta không sao.
Dialogue: 0,0:10:05.96,0:10:06.87,Default,,0,0,0,,Cô cô đến đúng lúc lắm.
Dialogue: 0,0:10:07.72,0:10:10.60,Default,,0,0,0,,Ta có thứ này muốn tặng cho cô cô.
Dialogue: 0,0:10:18.72,0:10:20.08,Default,,0,0,0,,Điện hạ, thứ này quý giá quá.
Dialogue: 0,0:10:23.03,0:10:24.67,Default,,0,0,0,,Cỏ huyên mọc nơi thềm nhà.
Dialogue: 0,0:10:25.32,0:10:28.44,Default,,0,0,0,,Ta nghe nói người đời\Nhay ví loại cỏ này với mẫu thân.
Dialogue: 0,0:10:30.00,0:10:31.36,Default,,0,0,0,,Từ nhỏ ta đã mất mẹ,
Dialogue: 0,0:10:32.03,0:10:34.96,Default,,0,0,0,,nên không có ai để tặng chiếc trâm này.
Dialogue: 0,0:10:36.79,0:10:37.39,Default,,0,0,0,,Chi bằng,
Dialogue: 0,0:10:40.00,0:10:41.00,Default,,0,0,0,,cứ tặng nó cho cô cô đi.
Dialogue: 0,0:10:46.36,0:10:46.87,Default,,0,0,0,,Nào.
Dialogue: 0,0:11:14.15,0:11:14.75,Default,,0,0,0,,Lan An,
Dialogue: 0,0:11:15.55,0:11:17.12,Default,,0,0,0,,cô cô đã dốc hết sức nuôi ta khôn lớn,
Dialogue: 0,0:11:17.51,0:11:18.96,Default,,0,0,0,,lại mưu tính kế hoạch vì ta,
Dialogue: 0,0:11:19.79,0:11:22.84,Default,,0,0,0,,những chuyện này\Nta đều khắc ghi trong lòng.
Dialogue: 0,0:11:24.08,0:11:25.87,Default,,0,0,0,,Chỉ không biết vị ca ca đó của ta
Dialogue: 0,0:11:26.32,0:11:27.32,Default,,0,0,0,,có bất ngờ
Dialogue: 0,0:11:27.66,0:11:28.24,Default,,0,0,0,,[Bài vị\NHoàng đế Đức Thánh Thần Võ Đại Cảnh]
Dialogue: 0,0:11:28.24,0:11:29.55,Default,,0,0,0,,khi thấy ta không?
Dialogue: 0,0:11:56.91,0:11:59.27,Default,,0,0,0,,Chúc mừng điện hạ.
Dialogue: 0,0:11:59.84,0:12:01.36,Default,,0,0,0,,Đàm Đài Minh Hàn và vây cánh
Dialogue: 0,0:12:01.36,0:12:02.84,Default,,0,0,0,,còn chưa ra khỏi vương phủ
Dialogue: 0,0:12:03.08,0:12:05.27,Default,,0,0,0,,đã bị thần dẫn người\Ndùng pháp thuật trói lại,
Dialogue: 0,0:12:05.84,0:12:07.32,Default,,0,0,0,,rồi chém đầu hết.
Dialogue: 0,0:12:08.75,0:12:09.55,Default,,0,0,0,,Vất vả cho cô rồi.
Dialogue: 0,0:12:10.63,0:12:12.24,Default,,0,0,0,,Được điện hạ khen ngợi
Dialogue: 0,0:12:12.55,0:12:13.75,Default,,0,0,0,,là may mắn của Phù Ngọc.
Dialogue: 0,0:12:22.72,0:12:24.39,Default,,0,0,0,,Giờ đây,\Nngười thân duy nhất còn sống của ta
Dialogue: 0,0:12:24.60,0:12:27.48,Default,,0,0,0,,chỉ còn mình tam đệ kia thôi.
Dialogue: 0,0:12:29.12,0:12:30.72,Default,,0,0,0,,Ta hơi nhớ nó đấy.
Dialogue: 0,0:12:31.20,0:12:31.91,Default,,0,0,0,,Lần này tới,
Dialogue: 0,0:12:32.20,0:12:34.15,Default,,0,0,0,,Lan An có dẫn theo\Nvài đầu bếp của tộc Di Nguyệt,
Dialogue: 0,0:12:34.51,0:12:35.84,Default,,0,0,0,,nấu toàn món ăn quê nhà,
Dialogue: 0,0:12:36.36,0:12:38.15,Default,,0,0,0,,không biết điện hạ ăn có quen không?
Dialogue: 0,0:12:39.39,0:12:40.27,Default,,0,0,0,,Cô cô có lòng rồi.
Dialogue: 0,0:12:41.32,0:12:42.39,Default,,0,0,0,,Nhiều năm ta không về,
Dialogue: 0,0:12:43.00,0:12:45.27,Default,,0,0,0,,không biết tình hình nước Cảnh\Ngiờ thế nào rồi?
Dialogue: 0,0:12:46.08,0:12:47.79,Default,,0,0,0,,Không lâu trước,\NCảnh vương mới mất vì bệnh.
Dialogue: 0,0:12:48.08,0:12:50.60,Default,,0,0,0,,Quân vương mới bây giờ\Nlà Đàm Đài Minh Lãng.
Dialogue: 0,0:12:53.84,0:12:55.20,Default,,0,0,0,,Lan An còn việc này
Dialogue: 0,0:12:55.51,0:12:56.91,Default,,0,0,0,,muốn biết suy nghĩ của điện hạ.
Dialogue: 0,0:12:57.72,0:12:59.84,Default,,0,0,0,,Tuy Diệp Tịch Vụ vô cùng thô tục,
Dialogue: 0,0:13:00.15,0:13:02.08,Default,,0,0,0,,nhưng dù gì cũng là thê tử của điện hạ,
Dialogue: 0,0:13:02.60,0:13:04.32,Default,,0,0,0,,sau này về nước Cảnh…
Dialogue: 0,0:13:04.32,0:13:05.67,Default,,0,0,0,,Cô ta không được coi là thê tử của ta.
Dialogue: 0,0:13:10.79,0:13:11.48,Default,,0,0,0,,Lần này ra ngoài,
Dialogue: 0,0:13:11.48,0:13:13.15,Default,,0,0,0,,ngoài mấy đầu bếp tộc Di Nguyệt,
Dialogue: 0,0:13:13.36,0:13:14.84,Default,,0,0,0,,ta còn mang theo mỹ nhân tộc Di Nguyệt,
Dialogue: 0,0:13:15.08,0:13:16.20,Default,,0,0,0,,ai nấy đều giỏi ca múa,
Dialogue: 0,0:13:16.20,0:13:17.79,Default,,0,0,0,,điện hạ không ngại\Nthì thưởng thức xem sao.
Dialogue: 0,0:13:18.72,0:13:20.03,Default,,0,0,0,,Coi như giết thời gian.
Dialogue: 0,0:13:21.84,0:13:22.48,Default,,0,0,0,,Được.
Dialogue: 0,0:13:26.15,0:13:26.84,Default,,0,0,0,,Đẹp thật đấy.
Dialogue: 0,0:13:32.75,0:13:33.44,Default,,0,0,0,,Cô xem cái này thế nào?
Dialogue: 0,0:13:33.84,0:13:34.51,Default,,0,0,0,,Tử Linh,
Dialogue: 0,0:13:34.67,0:13:36.36,Default,,0,0,0,,đệ đệ của cô là thủ lĩnh Nguyệt Ảnh Vệ,
Dialogue: 0,0:13:36.48,0:13:37.84,Default,,0,0,0,,vậy cậu ấy có kể với cô
Dialogue: 0,0:13:37.84,0:13:39.12,Default,,0,0,0,,là điện hạ trông như thế nào không?
Dialogue: 0,0:13:39.84,0:13:40.82,Default,,0,0,0,,- Đúng đó.\N- Phải đó.
Dialogue: 0,0:13:40.82,0:13:41.36,Default,,0,0,0,,Phải đó.
Dialogue: 0,0:13:42.48,0:13:44.03,Default,,0,0,0,,Bạch Vũ ngốc lắm,
Dialogue: 0,0:13:44.20,0:13:45.48,Default,,0,0,0,,chỉ biết làm tròn chức trách,
Dialogue: 0,0:13:45.67,0:13:47.00,Default,,0,0,0,,còn lâu mới nói với ta mấy chuyện ấy.
Dialogue: 0,0:13:47.67,0:13:50.44,Default,,0,0,0,,Cơ mà, điện hạ trông thế nào\Nkhông quan trọng,
Dialogue: 0,0:13:50.60,0:13:52.72,Default,,0,0,0,,ta chỉ muốn biết\Nngài ấy thích nữ tử thế nào.
Dialogue: 0,0:13:52.79,0:13:53.87,Default,,0,0,0,,Đúng không các tỷ muội?
Dialogue: 0,0:13:54.08,0:13:54.96,Default,,0,0,0,,- Đúng đó.\N- Đúng vậy.
Dialogue: 0,0:13:56.60,0:13:57.03,Default,,0,0,0,,Vậy cô nói xem
Dialogue: 0,0:13:57.03,0:13:58.12,Default,,0,0,0,,- Tìm lại xem.\N- ngài ấy thích kiểu nào?
Dialogue: 0,0:13:58.12,0:13:59.48,Default,,0,0,0,,Một nữ nhân thôi, không trốn được đâu.
Dialogue: 0,0:14:06.36,0:14:07.87,Default,,0,0,0,,Mấy tiểu ca đến đây làm gì thế?
Dialogue: 0,0:14:08.12,0:14:10.03,Default,,0,0,0,,Chấp tỷ tỷ, bọn ta tới tìm người.
Dialogue: 0,0:14:10.63,0:14:12.32,Default,,0,0,0,,Không biết các tỷ có trông thấy
Dialogue: 0,0:14:12.32,0:14:13.63,Default,,0,0,0,,một nữ tử trẻ tuổi không?
Dialogue: 0,0:14:14.27,0:14:14.87,Default,,0,0,0,,Trẻ tuổi ư?
Dialogue: 0,0:14:15.39,0:14:16.79,Default,,0,0,0,,Chỗ bọn ta đều trẻ tuổi,
Dialogue: 0,0:14:16.79,0:14:18.00,Default,,0,0,0,,đều là nữ tử trẻ tuổi.
Dialogue: 0,0:14:18.48,0:14:20.96,Default,,0,0,0,,Vậy bọn ta có thể vào lục soát không?
Dialogue: 0,0:14:21.24,0:14:22.72,Default,,0,0,0,,Thôi, không làm khó các ngươi nữa.
Dialogue: 0,0:14:31.12,0:14:33.00,Default,,0,0,0,,Lan An cô cô\Nbảo các vị cùng đến biểu diễn.
Dialogue: 0,0:14:33.39,0:14:34.51,Default,,0,0,0,,Cuối cùng cũng cho gọi chúng ta.
Dialogue: 0,0:14:34.87,0:14:35.63,Default,,0,0,0,,Xin lỗi nhé.
Dialogue: 0,0:14:38.87,0:14:40.36,Default,,0,0,0,,Các tỷ muội, chúng ta phải bắt đầu rồi.
Dialogue: 0,0:14:40.55,0:14:41.12,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:14:41.63,0:14:42.27,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:14:42.55,0:14:43.44,Default,,0,0,0,,[Biểu diễn?]
Dialogue: 0,0:14:44.12,0:14:45.12,Default,,0,0,0,,[Chẳng lẽ phải nhảy múa?]
Dialogue: 0,0:14:45.87,0:14:47.48,Default,,0,0,0,,[Ta đâu có biết nhảy múa.]
Dialogue: 0,0:14:51.96,0:14:52.79,Default,,0,0,0,,[Cái này thì ta biết.]
Dialogue: 0,0:16:19.60,0:16:20.32,Default,,0,0,0,,[Hỏng rồi,]
Dialogue: 0,0:16:21.15,0:16:22.20,Default,,0,0,0,,[đàn Không ở nhân gian]
Dialogue: 0,0:16:22.48,0:16:24.20,Default,,0,0,0,,[thua xa Trùng Vũ.]
Dialogue: 0,0:16:24.39,0:16:25.87,Default,,0,0,0,,[Đến dây đàn cũng lỏng lẻo.]
Dialogue: 0,0:16:26.24,0:16:27.15,Default,,0,0,0,,[Diệp Tịch Vụ?]
Dialogue: 0,0:16:28.36,0:16:29.60,Default,,0,0,0,,[Sao cô ta lại chạy ra đây?]
Dialogue: 0,0:16:31.63,0:16:32.24,Default,,0,0,0,,Điện hạ,
Dialogue: 0,0:16:32.44,0:16:33.20,Default,,0,0,0,,thuộc hạ vô dụng,
Dialogue: 0,0:16:33.44,0:16:34.39,Default,,0,0,0,,để Diệp Tịch Vụ chạy thoát rồi.
Dialogue: 0,0:16:35.79,0:16:36.39,Default,,0,0,0,,Vậy à?
Dialogue: 0,0:16:36.84,0:16:38.36,Default,,0,0,0,,Thuộc hạ đã sai người\Ncanh chừng nghiêm ngặt thuyền nhỏ.
Dialogue: 0,0:16:38.75,0:16:40.72,Default,,0,0,0,,Nguyệt Ảnh Vệ tuần tra\Ncũng không thấy có người nhảy sông.
Dialogue: 0,0:16:41.20,0:16:42.55,Default,,0,0,0,,Chắc chắn Diệp Tịch Vụ vẫn đang trên tàu.
Dialogue: 0,0:16:42.84,0:16:43.67,Default,,0,0,0,,Xin điện hạ ra lệnh,
Dialogue: 0,0:16:43.96,0:16:45.00,Default,,0,0,0,,lục soát các khoang.
Dialogue: 0,0:16:45.44,0:16:46.08,Default,,0,0,0,,Không cần nữa,
Dialogue: 0,0:16:47.00,0:16:47.96,Default,,0,0,0,,nghe nhạc đi đã.
Dialogue: 0,0:16:49.00,0:16:50.08,Default,,0,0,0,,Cô ta không chạy thoát được đâu.
Dialogue: 0,0:16:58.91,0:16:59.72,Default,,0,0,0,,[Diệp Tịch Vụ,]
Dialogue: 0,0:17:00.39,0:17:02.12,Default,,0,0,0,,[để xem cô cố được đến bao giờ.]
Dialogue: 0,0:17:05.24,0:17:07.64,Default,,0,0,0,,[Sao vẫn chưa múa xong nữa?]
Dialogue: 0,0:17:13.24,0:17:15.20,Default,,0,0,0,,[Cứ đàn tiếp thì sẽ lộ mất.]
Dialogue: 0,0:17:36.79,0:17:38.55,Default,,0,0,0,,[Cuối cùng cũng qua mặt được rồi.]
Dialogue: 0,0:17:39.16,0:17:40.92,Default,,0,0,0,,Điện hạ có thích điệu múa này không?
Dialogue: 0,0:17:42.75,0:17:43.59,Default,,0,0,0,,Múa đẹp đấy.
Dialogue: 0,0:17:47.48,0:17:50.11,Default,,0,0,0,,Chi bằng, thêm một điệu múa đơn đi.
Dialogue: 0,0:17:57.31,0:17:59.35,Default,,0,0,0,,Ta muốn xem nhạc cơ kia múa một bài.
Dialogue: 0,0:18:00.96,0:18:02.03,Default,,0,0,0,,Ai vậy?
Dialogue: 0,0:18:02.03,0:18:03.40,Default,,0,0,0,,Điện hạ muốn ai múa thế?
Dialogue: 0,0:18:05.24,0:18:06.00,Default,,0,0,0,,Là ai vậy?
Dialogue: 0,0:18:06.35,0:18:06.92,Default,,0,0,0,,Đúng vậy,
Dialogue: 0,0:18:08.00,0:18:09.55,Default,,0,0,0,,chính là người cầm đàn Không kia.
Dialogue: 0,0:18:12.07,0:18:14.16,Default,,0,0,0,,Ta vừa bói một quẻ cho họ,
Dialogue: 0,0:18:14.68,0:18:15.59,Default,,0,0,0,,hai người đoán xem thế nào?
Dialogue: 0,0:18:17.68,0:18:19.16,Default,,0,0,0,,Gặp nước sẽ phất,
Dialogue: 0,0:18:20.16,0:18:21.59,Default,,0,0,0,,hoảng sợ nhưng không nguy hiểm.
Dialogue: 0,0:18:22.20,0:18:24.24,Default,,0,0,0,,Là đại cát đấy.
Dialogue: 0,0:18:24.48,0:18:25.24,Default,,0,0,0,,Đại cát?
Dialogue: 0,0:18:27.31,0:18:28.64,Default,,0,0,0,,Đừng lo lắng nữa.
Dialogue: 0,0:18:29.00,0:18:30.79,Default,,0,0,0,,Chưa biết chừng,\Nnhị tiểu thư bị đưa đến nước Cảnh
Dialogue: 0,0:18:31.40,0:18:33.75,Default,,0,0,0,,rồi lên làm vương hậu,\Nđược hưởng phúc đấy.
Dialogue: 0,0:18:35.51,0:18:37.27,Default,,0,0,0,,Nếu tỷ ấy đến nước địch\Nlàm vương hậu thật,
Dialogue: 0,0:18:38.16,0:18:39.88,Default,,0,0,0,,e là tình cảnh Diệp gia chúng ta trong triều
Dialogue: 0,0:18:40.20,0:18:41.55,Default,,0,0,0,,sẽ nguy hiểm hơn nữa.
Dialogue: 0,0:18:43.48,0:18:45.31,Default,,0,0,0,,Tại sao điện hạ lại chọn cô ta lên múa?
Dialogue: 0,0:18:45.35,0:18:46.27,Default,,0,0,0,,- Đúng đó.\N- Đúng vậy.
Dialogue: 0,0:18:46.48,0:18:47.55,Default,,0,0,0,,Tại sao lại là cô ta?
Dialogue: 0,0:18:49.24,0:18:50.64,Default,,0,0,0,,[Đàm Đài Tẫn, ngươi giỏi lắm!]
Dialogue: 0,0:18:50.96,0:18:52.07,Default,,0,0,0,,[Vậy mà dám chơi ta như thế.]
Dialogue: 0,0:18:52.07,0:18:52.64,Default,,0,0,0,,Sao thế?
Dialogue: 0,0:18:53.03,0:18:55.31,Default,,0,0,0,,Cô chỉ biết gảy đàn\Nchứ không biết nhảy múa à?
Dialogue: 0,0:18:58.27,0:18:59.35,Default,,0,0,0,,[Không thể khoanh tay chờ chết được,]
Dialogue: 0,0:18:59.75,0:19:01.03,Default,,0,0,0,,[phải nghĩ cách chóng thoát thân.]
Dialogue: 0,0:19:15.75,0:19:16.48,Default,,0,0,0,,[Đàm Đài Tẫn,]
Dialogue: 0,0:19:16.79,0:19:18.24,Default,,0,0,0,,[tự ngươi chuốc lấy đấy nhé,]
Dialogue: 0,0:19:19.11,0:19:21.03,Default,,0,0,0,,[lát nữa đừng có mà hối hận.]
Dialogue: 0,0:21:30.48,0:21:30.79,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:21:30.83,0:21:31.31,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:21:32.79,0:21:33.35,Default,,0,0,0,,Lui xuống.
Dialogue: 0,0:21:37.83,0:21:38.44,Default,,0,0,0,,Đi theo ta.
Dialogue: 0,0:21:45.27,0:21:47.00,Default,,0,0,0,,Đứng yên hết đi, còn động đậy nữa\Nlà ta siết chết hắn.
Dialogue: 0,0:21:48.83,0:21:49.55,Default,,0,0,0,,Diệp nhị tiểu thư,
Dialogue: 0,0:21:50.96,0:21:52.11,Default,,0,0,0,,rốt cuộc cô muốn làm gì?
Dialogue: 0,0:21:52.40,0:21:53.20,Default,,0,0,0,,Dừng tàu lại.
Dialogue: 0,0:21:53.27,0:21:54.20,Default,,0,0,0,,Cho bọn ta lên thuyền nhỏ.
Dialogue: 0,0:21:54.83,0:21:56.11,Default,,0,0,0,,Đợi bọn ta tới bờ an toàn,
Dialogue: 0,0:21:56.11,0:21:57.03,Default,,0,0,0,,ta sẽ thả hắn về.
Dialogue: 0,0:21:57.24,0:21:58.44,Default,,0,0,0,,Cô muốn chạy thế ư?
Dialogue: 0,0:21:59.11,0:22:00.03,Default,,0,0,0,,Không muốn bị siết chết
Dialogue: 0,0:22:00.03,0:22:01.11,Default,,0,0,0,,thì mau cho ta lên thuyền nhỏ.
Dialogue: 0,0:22:02.00,0:22:03.00,Default,,0,0,0,,Hai chúng ta thoải mái chia tay,
Dialogue: 0,0:22:03.27,0:22:04.48,Default,,0,0,0,,cũng coi như kết thúc trong hòa bình.
Dialogue: 0,0:22:05.35,0:22:06.64,Default,,0,0,0,,Cô không thoát được đâu.
Dialogue: 0,0:22:07.00,0:22:08.44,Default,,0,0,0,,Ngươi cũng tự tin quá đấy.
Dialogue: 0,0:22:13.64,0:22:14.40,Default,,0,0,0,,Diệp Tịch Vụ,
Dialogue: 0,0:22:15.24,0:22:16.27,Default,,0,0,0,,chắc là cô chưa từng thấy
Dialogue: 0,0:22:16.27,0:22:17.75,Default,,0,0,0,,thú dữ săn bắt con mồi nhỉ?
Dialogue: 0,0:22:18.35,0:22:21.07,Default,,0,0,0,,Có những con thú dữ\Nsẽ không giết chết con mồi
Dialogue: 0,0:22:21.07,0:22:22.40,Default,,0,0,0,,một cách dễ dàng,
Dialogue: 0,0:22:22.92,0:22:23.92,Default,,0,0,0,,mà sẽ từ từ
Dialogue: 0,0:22:24.48,0:22:27.24,Default,,0,0,0,,trêu đùa, hành hạ con mồi
Dialogue: 0,0:22:28.27,0:22:30.59,Default,,0,0,0,,cho tới khi con mồi\Ntrút hơi thở cuối cùng.
Dialogue: 0,0:22:30.96,0:22:31.55,Default,,0,0,0,,Tiếc rằng,
Dialogue: 0,0:22:32.16,0:22:33.75,Default,,0,0,0,,ta không phải đồ chơi trong tay ngươi.
Dialogue: 0,0:22:34.03,0:22:35.83,Default,,0,0,0,,Nếu ngươi cho ta thời gian một điệu múa,
Dialogue: 0,0:22:36.27,0:22:38.20,Default,,0,0,0,,ta sẽ khiến ngươi\Nphải hối hận vì điệu múa này.
Dialogue: 0,0:22:38.48,0:22:39.44,Default,,0,0,0,,Để ta lên thuyền nhỏ.
Dialogue: 0,0:22:41.24,0:22:42.48,Default,,0,0,0,,[Nếu cô muốn chơi thế,]
Dialogue: 0,0:22:42.83,0:22:44.24,Default,,0,0,0,,[thì ta sẽ chơi với cô đến cùng.]
Dialogue: 0,0:22:45.44,0:22:46.20,Default,,0,0,0,,Chấp Bạch Vũ.
Dialogue: 0,0:22:46.35,0:22:47.00,Default,,0,0,0,,Có thuộc hạ.
Dialogue: 0,0:22:47.51,0:22:48.44,Default,,0,0,0,,Đi sang bên thuyền nhỏ.
Dialogue: 0,0:22:48.55,0:22:49.07,Default,,0,0,0,,Vâng.
Dialogue: 0,0:23:01.20,0:23:02.03,Default,,0,0,0,,Coi như ngươi thức thời.
Dialogue: 0,0:23:04.07,0:23:05.16,Default,,0,0,0,,Chặt đứt dây thừng đi.
Dialogue: 0,0:23:05.24,0:23:05.75,Default,,0,0,0,,Ngươi dám?
Dialogue: 0,0:23:06.00,0:23:06.55,Default,,0,0,0,,Chặt đi.
Dialogue: 0,0:23:06.75,0:23:07.24,Default,,0,0,0,,Vâng.
Dialogue: 0,0:23:07.48,0:23:08.96,Default,,0,0,0,,Bảo hắn dừng tay,\Nkhông thì ta siết chết ngươi.
Dialogue: 0,0:23:24.27,0:23:24.96,Default,,0,0,0,,Bắt lấy cô ta.
Dialogue: 0,0:23:25.24,0:23:25.79,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:23:26.11,0:23:27.24,Default,,0,0,0,,Muốn người chết hay sống?
Dialogue: 0,0:23:27.59,0:23:28.35,Default,,0,0,0,,Sao cũng được.
Dialogue: 0,0:23:28.35,0:23:28.88,Default,,0,0,0,,Vâng.
Dialogue: 0,0:23:29.20,0:23:29.75,Default,,0,0,0,,Đợi đã.
Dialogue: 0,0:23:33.64,0:23:34.48,Default,,0,0,0,,Cứ để sống đi.
Dialogue: 0,0:23:34.75,0:23:35.27,Default,,0,0,0,,Vâng.
Dialogue: 0,0:23:53.92,0:23:54.64,Default,,0,0,0,,Diệp Tịch Vụ,
Dialogue: 0,0:23:55.55,0:23:56.92,Default,,0,0,0,,cô đã không còn đường lui rồi.
Dialogue: 0,0:23:57.40,0:23:58.75,Default,,0,0,0,,Ngoan ngoãn buông tay chịu trói,
Dialogue: 0,0:23:58.92,0:23:59.96,Default,,0,0,0,,về nước Cảnh với ta.
Dialogue: 0,0:24:01.20,0:24:02.20,Default,,0,0,0,,Không thèm.
Dialogue: 0,0:24:02.75,0:24:04.96,Default,,0,0,0,,Ai muốn về với ngươi?
Dialogue: 0,0:24:05.27,0:24:05.83,Default,,0,0,0,,Ngươi đã nói sớm muộn gì\Ncũng phải giết ta đấy thôi?
Dialogue: 0,0:24:09.00,0:24:10.11,Default,,0,0,0,,Cô…
Dialogue: 0,0:24:11.75,0:24:13.20,Default,,0,0,0,,Đúng là ta muốn giết cô,
Dialogue: 0,0:24:13.68,0:24:15.44,Default,,0,0,0,,nhưng con sâu cái kiến còn sống qua ngày,
Dialogue: 0,0:24:17.51,0:24:18.16,Default,,0,0,0,,cô sống tạm thêm vài ngày nữa\Nkhông tốt sao?
Dialogue: 0,0:24:19.44,0:24:21.31,Default,,0,0,0,,Thế ư?
Dialogue: 0,0:24:22.59,0:24:23.35,Default,,0,0,0,,Vậy ta quả thực phải tạ ơn điện hạ.
Dialogue: 0,0:24:25.27,0:24:27.59,Default,,0,0,0,,Tiếc là,
Dialogue: 0,0:25:06.72,0:25:07.79,Default,,0,0,0,,ta không thèm sự bố thí như thế.
Dialogue: 0,0:25:11.68,0:25:13.44,Default,,0,0,0,,Cô ta lại dám nhảy khỏi tàu.
Dialogue: 0,0:25:15.96,0:25:16.55,Default,,0,0,0,,Cô ta muốn chạy khỏi ta đến thế ư?
Dialogue: 0,0:25:17.83,0:25:18.75,Default,,0,0,0,,Lan An,
Dialogue: 0,0:25:21.31,0:25:21.92,Default,,0,0,0,,cô ta có chết không?
Dialogue: 0,0:25:21.92,0:25:22.40,Default,,0,0,0,,Tất Song.
Dialogue: 0,0:25:22.92,0:25:24.35,Default,,0,0,0,,Có.
Dialogue: 0,0:25:24.51,0:25:25.35,Default,,0,0,0,,Dẫn người đi tìm Diệp nhị tiểu thư.
Dialogue: 0,0:25:27.24,0:25:28.03,Default,,0,0,0,,Sống phải thấy người,
Dialogue: 0,0:25:28.55,0:25:29.07,Default,,0,0,0,,chết phải thấy xác.
Dialogue: 0,0:25:54.64,0:25:56.79,Default,,0,0,0,,Vâng.
Dialogue: 0,0:25:56.92,0:25:58.03,Default,,0,0,0,,Nghe nói phụ vương\Ngiao việc truy bắt Đàm Đài Tẫn
Dialogue: 0,0:25:58.35,0:25:59.31,Default,,0,0,0,,cho tướng quân Diệp Thanh Vũ.
Dialogue: 0,0:25:59.31,0:26:00.83,Default,,0,0,0,,Không biết phụ vương
Dialogue: 0,0:26:04.64,0:26:05.24,Default,,0,0,0,,có thể giao việc này cho nhi thần không ạ?
Dialogue: 0,0:26:05.68,0:26:06.72,Default,,0,0,0,,Tại sao?
Dialogue: 0,0:26:07.16,0:26:09.03,Default,,0,0,0,,Thứ cho nhi thần nói thẳng,
Dialogue: 0,0:26:09.11,0:26:10.03,Default,,0,0,0,,lần này Đàm Đài Tẫn rời đi,\Nchẳng khác nào cá gặp nước,
Dialogue: 0,0:26:10.48,0:26:12.83,Default,,0,0,0,,khó mà ngăn cản.
Dialogue: 0,0:26:13.03,0:26:14.11,Default,,0,0,0,,Nhưng châu và quận ở hai bờ sông\Ncó rất nhiều cường hào,
Dialogue: 0,0:26:14.31,0:26:15.64,Default,,0,0,0,,thế lực rất phức tạp,
Dialogue: 0,0:26:16.24,0:26:18.11,Default,,0,0,0,,khó mà thu được thuế hàng năm.
Dialogue: 0,0:26:18.11,0:26:19.11,Default,,0,0,0,,Nếu Tiềm Long Vệ có thể\Nlấy danh nghĩa đuổi bắt con tin
Dialogue: 0,0:26:19.44,0:26:20.92,Default,,0,0,0,,để tuần tra các châu và quận,
Dialogue: 0,0:26:21.03,0:26:21.96,Default,,0,0,0,,nhân cơ hội kiểm tra\Ntiền và lương thực ở kho các phủ,
Dialogue: 0,0:26:22.31,0:26:24.51,Default,,0,0,0,,giết gà dọa khỉ,
Dialogue: 0,0:26:28.96,0:26:31.20,Default,,0,0,0,,có lẽ có thể giải quyết\Nmột việc khó cho nước Thịnh.
Dialogue: 0,0:26:31.59,0:26:32.79,Default,,0,0,0,,Đúng là Lẫm Nhi của ta rất thông minh.
Dialogue: 0,0:26:33.24,0:26:34.03,Default,,0,0,0,,Vất vả cho con rồi,
Dialogue: 0,0:26:34.27,0:26:36.79,Default,,0,0,0,,còn nghĩ cách hay như thế
Dialogue: 0,0:26:38.75,0:26:39.83,Default,,0,0,0,,để Diệp gia lập công chuộc tội.
Dialogue: 0,0:26:40.00,0:26:40.83,Default,,0,0,0,,Diệp gia lơ là cảnh giác,
Dialogue: 0,0:26:41.59,0:26:42.68,Default,,0,0,0,,đúng là có tội.
Dialogue: 0,0:26:42.68,0:26:44.44,Default,,0,0,0,,Nhưng hai cha con Diệp gia
Dialogue: 0,0:26:44.96,0:26:46.00,Default,,0,0,0,,là tướng soái nhân tài hiếm có\Ncủa nước Thịnh ta.
Dialogue: 0,0:26:46.27,0:26:47.20,Default,,0,0,0,,Có hai cha con Diệp gia
Dialogue: 0,0:26:47.20,0:26:48.07,Default,,0,0,0,,thì biên quan được yên ổn,
Dialogue: 0,0:26:48.31,0:26:48.96,Default,,0,0,0,,nước Thịnh được bình yên.
Dialogue: 0,0:26:49.20,0:26:51.24,Default,,0,0,0,,Huống chi,
Dialogue: 0,0:26:51.51,0:26:52.79,Default,,0,0,0,,nhi thần nghe nói\NĐàm Đài Minh Lãng nham hiểm, độc ác,
Dialogue: 0,0:26:53.11,0:26:55.16,Default,,0,0,0,,dù không bắt được Đàm Đài Tẫn,
Dialogue: 0,0:26:55.44,0:26:56.44,Default,,0,0,0,,hắn về nước Cảnh\Ntranh đấu với huynh trưởng
Dialogue: 0,0:26:56.44,0:26:57.75,Default,,0,0,0,,thì cũng chưa hẳn
Dialogue: 0,0:27:00.79,0:27:03.03,Default,,0,0,0,,là chuyện xấu với nước Thịnh.
Dialogue: 0,0:27:03.88,0:27:05.51,Default,,0,0,0,,Đây mới là lời con muốn nói với trẫm
Dialogue: 0,0:27:07.56,0:27:08.16,Default,,0,0,0,,trong buổi gặp mặt hôm nay đúng không?
Dialogue: 0,0:27:08.60,0:27:09.73,Default,,0,0,0,,Sao nào?
Dialogue: 0,0:27:10.60,0:27:12.29,Default,,0,0,0,,Trước mặt trẫm,
Dialogue: 0,0:27:13.93,0:27:14.73,Default,,0,0,0,,con cũng học được cách\Nnghĩ một đằng nói một nẻo rồi à?
Dialogue: 0,0:27:17.12,0:27:17.77,Default,,0,0,0,,Nhi thần kinh hãi.
Dialogue: 0,0:27:18.32,0:27:19.45,Default,,0,0,0,,Thôi bỏ đi.
Dialogue: 0,0:27:19.84,0:27:21.29,Default,,0,0,0,,Diệp gia vẫn còn có tác dụng,
Dialogue: 0,0:27:21.73,0:27:22.53,Default,,0,0,0,,trừng phạt nhẹ để cảnh cáo là được.
Dialogue: 0,0:27:22.73,0:27:25.25,Default,,0,0,0,,Trẫm sẽ giúp con
Dialogue: 0,0:27:26.12,0:27:28.64,Default,,0,0,0,,tặng ơn tình này cho Diệp gia.
Dialogue: 0,0:27:28.80,0:27:29.88,Default,,0,0,0,,Con làm cho tốt\Nviệc kiểm tra kho của các phủ đi,
Dialogue: 0,0:27:30.73,0:27:31.45,Default,,0,0,0,,trẫm tất sẽ ban thưởng.
Dialogue: 0,0:27:32.60,0:27:33.08,Default,,0,0,0,,Lui xuống đi.
Dialogue: 0,0:27:34.40,0:27:36.56,Default,,0,0,0,,Vâng.
Dialogue: 0,0:27:37.29,0:27:38.73,Default,,0,0,0,,Đàm Đài Tẫn\Nlàm con tin ở nước Thịnh nhiều năm,
Dialogue: 0,0:27:39.36,0:27:40.77,Default,,0,0,0,,mẫu thân lại là người ngoại tộc,
Dialogue: 0,0:27:41.16,0:27:42.32,Default,,0,0,0,,không có nền móng gì ở trong triều hết,
Dialogue: 0,0:27:42.93,0:27:44.29,Default,,0,0,0,,vốn không đáng phải e ngại.
Dialogue: 0,0:27:45.05,0:27:47.36,Default,,0,0,0,,Phù Ngọc to gan hỏi một câu,
Dialogue: 0,0:27:49.25,0:27:50.80,Default,,0,0,0,,tại sao điện hạ luôn coi hắn\Nnhư cái gai trong mắt?
Dialogue: 0,0:27:53.25,0:27:54.45,Default,,0,0,0,,Vì luôn có người
Dialogue: 0,0:27:54.71,0:27:55.93,Default,,0,0,0,,không quên được hắn.
Dialogue: 0,0:27:55.93,0:27:57.40,Default,,0,0,0,,[Bài vị\NHoàng đế Đức Thánh Thần Võ Đại Cảnh]
Dialogue: 0,0:27:58.97,0:28:01.84,Default,,0,0,0,,[Con là con đích trưởng tử,]
Dialogue: 0,0:28:02.77,0:28:06.36,Default,,0,0,0,,cũng là đứa con có năng lực nhất của trẫm.
Dialogue: 0,0:28:08.21,0:28:09.12,Default,,0,0,0,,Giang sơn rộng lớn của nước Cảnh\Ngiao cho con đấy.
Dialogue: 0,0:28:09.56,0:28:11.60,Default,,0,0,0,,Phụ vương giao trọng trách,
Dialogue: 0,0:28:12.77,0:28:14.12,Default,,0,0,0,,con cảm động rơi nước mắt.
Dialogue: 0,0:28:14.49,0:28:18.69,Default,,0,0,0,,Bây giờ,
Dialogue: 0,0:28:18.84,0:28:19.53,Default,,0,0,0,,trẫm chỉ còn một tâm nguyện\Nchưa đạt được thôi.
Dialogue: 0,0:28:20.36,0:28:23.77,Default,,0,0,0,,Minh Lãng,
Dialogue: 0,0:28:23.84,0:28:26.01,Default,,0,0,0,,con có thể tác thành cho tâm nguyện\Ncủa phụ vương được không?
Dialogue: 0,0:28:26.36,0:28:27.73,Default,,0,0,0,,Ước muốn của phụ vương chính là ý trời,
Dialogue: 0,0:28:28.49,0:28:30.16,Default,,0,0,0,,sao con dám nói là tác thành được?
Dialogue: 0,0:28:33.16,0:28:37.12,Default,,0,0,0,,Mong phụ vương nói rõ với con.
Dialogue: 0,0:28:38.05,0:28:39.64,Default,,0,0,0,,[Trẫm muốn mau chóng\Nđón Đàm Đài Tẫn về nước Cảnh.]
Dialogue: 0,0:28:40.29,0:28:45.97,Default,,0,0,0,,[Chỉ là trên đời này,]
Dialogue: 0,0:28:48.53,0:28:52.21,Default,,0,0,0,,[chỉ mình nó là có đôi mắt của Nhu phi.]
Dialogue: 0,0:28:54.05,0:28:57.36,Default,,0,0,0,,[Trẫm rất muốn\Nnhìn đôi mắt đó một lần nữa,]
Dialogue: 0,0:29:00.49,0:29:02.36,Default,,0,0,0,,dù có chết cũng được nhắm mắt.
Dialogue: 0,0:29:03.08,0:29:04.77,Default,,0,0,0,,Lẽ nào điều tiếc nuối duy nhất\Ntrong đời này của phụ vương
Dialogue: 0,0:29:05.12,0:29:07.40,Default,,0,0,0,,chỉ có mình Nhu phi thôi sao?
Dialogue: 0,0:29:08.25,0:29:10.36,Default,,0,0,0,,Lẽ nào người đã quên\Nmẫu hậu con chết vì cái gì rồi sao?
Dialogue: 0,0:29:10.36,0:29:11.69,Default,,0,0,0,,[Ngay năm đầu người đàn bà yêu ma]
Dialogue: 0,0:29:11.69,0:29:12.69,Default,,0,0,0,,[biết nói chuyện\Nvới súc sinh kia vào cung,]
Dialogue: 0,0:29:13.12,0:29:14.88,Default,,0,0,0,,[vào kỳ săn bắn mùa thu,]
Dialogue: 0,0:29:15.40,0:29:17.12,Default,,0,0,0,,xe của phụ vương bị thú dữ tấn công,
Dialogue: 0,0:29:17.12,0:29:18.45,Default,,0,0,0,,mẫu hậu con vì cứu người
Dialogue: 0,0:29:19.36,0:29:20.84,Default,,0,0,0,,nên mới mất sớm.
Dialogue: 0,0:29:20.84,0:29:22.45,Default,,0,0,0,,Ai cũng nói là ả yêu ma kia
Dialogue: 0,0:29:22.88,0:29:24.93,Default,,0,0,0,,thao túng thú dữ hại chết mẫu hậu con,
Dialogue: 0,0:29:25.08,0:29:26.84,Default,,0,0,0,,chỉ có mình người một mực bao che.
Dialogue: 0,0:29:26.84,0:29:28.45,Default,,0,0,0,,Đừng nhắc lại chuyện cũ nữa.
Dialogue: 0,0:29:32.05,0:29:33.93,Default,,0,0,0,,Đó chỉ là sự cố thôi.
Dialogue: 0,0:29:33.93,0:29:34.80,Default,,0,0,0,,[Con luôn có một vài lời khó nói]
Dialogue: 0,0:29:36.29,0:29:38.29,Default,,0,0,0,,[muốn hỏi người,]
Dialogue: 0,0:29:38.97,0:29:40.56,Default,,0,0,0,,nếu năm xưa Nhu phi không khó sinh,
Dialogue: 0,0:29:40.97,0:29:43.60,Default,,0,0,0,,Đàm Đài Tẫn được ra đời bình an,
Dialogue: 0,0:29:44.60,0:29:45.80,Default,,0,0,0,,thì hôm nay\Nngười mà người giao cả giang sơn cho
Dialogue: 0,0:29:46.77,0:29:47.60,Default,,0,0,0,,có còn là con không?
Dialogue: 0,0:29:49.40,0:29:50.88,Default,,0,0,0,,Giang sơn này
Dialogue: 0,0:29:50.97,0:29:52.32,Default,,0,0,0,,sẽ mau chóng trở thành của ta.
Dialogue: 0,0:29:52.60,0:29:54.77,Default,,0,0,0,,Người chết, đèn tắt,
Dialogue: 0,0:30:35.56,0:30:36.12,Default,,0,0,0,,đây chỉ là suy đoán của con thôi.
Dialogue: 0,0:30:37.73,0:30:38.69,Default,,0,0,0,,Phải.
Dialogue: 0,0:30:41.01,0:30:41.80,Default,,0,0,0,,Người chết,
Dialogue: 0,0:31:00.60,0:31:02.32,Default,,0,0,0,,đèn tắt.
Dialogue: 0,0:31:08.60,0:31:09.12,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:31:09.84,0:31:11.29,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:31:13.53,0:31:16.36,Default,,0,0,0,,Tại sao tốc độ tàu lại chậm hơn rồi?
Dialogue: 0,0:31:17.29,0:31:18.88,Default,,0,0,0,,Chắc là sắp đến\Nchỗ giao với sông Mặc rồi.
Dialogue: 0,0:31:19.40,0:31:21.01,Default,,0,0,0,,Nước sông Mặc chảy xiết và đục ngầu,
Dialogue: 0,0:31:21.49,0:31:22.73,Default,,0,0,0,,năm nào cũng vỡ đê, là con sông dữ.
Dialogue: 0,0:31:22.73,0:31:23.88,Default,,0,0,0,,Thế nên tàu đi đến đó
Dialogue: 0,0:31:24.84,0:31:25.45,Default,,0,0,0,,tất nhiên phải giảm tốc độ một chút.
Dialogue: 0,0:31:25.45,0:31:26.73,Default,,0,0,0,,Phải rồi,
Dialogue: 0,0:31:26.88,0:31:28.25,Default,,0,0,0,,ta đang định nói với điện hạ.
Dialogue: 0,0:31:28.56,0:31:30.08,Default,,0,0,0,,Nhóm Tất Song đã truyền tin về.
Dialogue: 0,0:31:30.45,0:31:31.80,Default,,0,0,0,,Bọn họ đã lục soát trên bờ cả đêm,
Dialogue: 0,0:31:32.60,0:31:33.49,Default,,0,0,0,,cuối cùng cũng tìm được Diệp nhị tiểu thư.
Dialogue: 0,0:31:33.49,0:31:35.12,Default,,0,0,0,,Ta không dám chậm trễ,
Dialogue: 0,0:31:36.12,0:31:37.05,Default,,0,0,0,,bèn bảo bọn họ chờ chúng ta\Nở bến phía trước.
Dialogue: 0,0:31:37.53,0:31:38.56,Default,,0,0,0,,Cô ta sao rồi?
Dialogue: 0,0:31:39.08,0:31:40.29,Default,,0,0,0,,Không nguy hiểm đến tính mạng,
Dialogue: 0,0:31:43.12,0:31:45.88,Default,,0,0,0,,chỉ là sặc hơi nhiều nước thôi.
Dialogue: 0,0:32:39.60,0:32:40.84,Default,,0,0,0,,Ta đã sớm nói,\Ncô ta sẽ không chạy thoát được.
Dialogue: 0,0:32:41.60,0:32:42.60,Default,,0,0,0,,Đúng là vất vả cho các ngươi rồi,
Dialogue: 0,0:32:44.12,0:32:45.32,Default,,0,0,0,,để cô ta nghỉ ngơi đi.
Dialogue: 0,0:32:46.60,0:32:47.12,Default,,0,0,0,,Tháo khăn trùm đầu ra.
Dialogue: 0,0:33:07.40,0:33:08.12,Default,,0,0,0,,Tuân lệnh.
Dialogue: 0,0:33:08.12,0:33:08.97,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:33:49.05,0:33:49.49,Default,,0,0,0,,Bảo vệ điện hạ.
Dialogue: 0,0:33:49.56,0:33:50.08,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:33:52.64,0:33:53.36,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:33:53.40,0:33:54.08,Default,,0,0,0,,Điện hạ, ngài không sao chứ?
Dialogue: 0,0:33:55.08,0:33:56.45,Default,,0,0,0,,Điện hạ,
Dialogue: 0,0:33:57.05,0:33:59.08,Default,,0,0,0,,ngươi đã nuốt yêu đan độc,
Dialogue: 0,0:34:07.88,0:34:11.16,Default,,0,0,0,,lại bị châm độc bắn mù mắt,
Dialogue: 0,0:34:15.72,0:34:16.33,Default,,0,0,0,,bây giờ thấy thế nào?
Dialogue: 0,0:34:23.12,0:34:25.01,Default,,0,0,0,,Tất Song.
Dialogue: 0,0:34:34.12,0:34:35.72,Default,,0,0,0,,Tại sao ngươi lại\Nphản bội tộc Di Nguyệt ta?
Dialogue: 0,0:35:13.60,0:35:14.12,Default,,0,0,0,,Điện hạ, rút lui trước đã.
Dialogue: 0,0:35:14.85,0:35:15.53,Default,,0,0,0,,[Không hay rồi.]
Dialogue: 0,0:35:15.85,0:35:17.16,Default,,0,0,0,,Chấp Bạch Vũ,
Dialogue: 0,0:35:17.56,0:35:18.89,Default,,0,0,0,,kẻ địch không chỉ có\Nđám hỗn tạp trước mắt,
Dialogue: 0,0:35:18.89,0:35:19.45,Default,,0,0,0,,không còn thời gian nữa, cướp ván cầu.
Dialogue: 0,0:36:10.05,0:36:10.81,Default,,0,0,0,,Vâng!
Dialogue: 0,0:36:13.24,0:36:13.97,Default,,0,0,0,,Dừng tay hết cho ta.
Dialogue: 0,0:36:14.12,0:36:15.12,Default,,0,0,0,,Tư tế đại nhân.
Dialogue: 0,0:36:15.97,0:36:17.93,Default,,0,0,0,,Bảo bọn chúng đầu hàng đi.
Dialogue: 0,0:36:23.33,0:36:25.97,Default,,0,0,0,,Nếu không ta lập tức giết Đàm Đài Tẫn.
Dialogue: 0,0:36:41.28,0:36:43.64,Default,,0,0,0,,Tất cả bỏ vũ khí xuống.
Dialogue: 0,0:36:43.97,0:36:45.85,Default,,0,0,0,,Hay lắm, đúng là quá hay.
Dialogue: 0,0:36:46.28,0:36:47.85,Default,,0,0,0,,Không hổ là tư tế của tộc Di Nguyệt,
Dialogue: 0,0:36:48.28,0:36:49.56,Default,,0,0,0,,quả nhiên túc trí đa mưu,
Dialogue: 0,0:36:49.56,0:36:51.93,Default,,0,0,0,,không ngờ lại có thể đi đường tắt
Dialogue: 0,0:36:58.08,0:37:00.07,Default,,0,0,0,,lừa tên ngu xuẩn này cập bến.
Dialogue: 0,0:37:00.53,0:37:01.76,Default,,0,0,0,,Đúng là chưa đánh đã thắng,
Dialogue: 0,0:37:02.64,0:37:03.60,Default,,0,0,0,,lập được công lớn.
Dialogue: 0,0:37:05.05,0:37:06.68,Default,,0,0,0,,Điện hạ anh minh.
Dialogue: 0,0:37:06.68,0:37:07.68,Default,,0,0,0,,Con gái ngươi ở chỗ ta\Nkhông phải lo ăn lo mặc,
Dialogue: 0,0:37:08.05,0:37:09.20,Default,,0,0,0,,cũng sắp khỏi bệnh rồi.
Dialogue: 0,0:37:09.20,0:37:12.20,Default,,0,0,0,,Ngươi lập công lớn thế này,
Dialogue: 0,0:37:12.93,0:37:13.85,Default,,0,0,0,,trở về ta sẽ đưa Phù Nhai về bên ngươi.
Dialogue: 0,0:37:24.05,0:37:25.08,Default,,0,0,0,,Tạ ơn điện hạ.
Dialogue: 0,0:37:26.16,0:37:29.37,Default,,0,0,0,,Tam đệ à,
Dialogue: 0,0:37:39.33,0:37:40.85,Default,,0,0,0,,xa cách bao năm,\Nchúng ta lại gặp nhau rồi.
Dialogue: 0,0:37:40.85,0:37:42.24,Default,,0,0,0,,Quả đúng là giống hệt
Dialogue: 0,0:37:43.85,0:37:44.56,Default,,0,0,0,,đôi mắt của ả yêu ma kia.
Dialogue: 0,0:37:45.12,0:37:46.16,Default,,0,0,0,,Tiếc là,
Dialogue: 0,0:37:50.12,0:37:50.89,Default,,0,0,0,,mù một mắt rồi.
Dialogue: 0,0:37:51.56,0:37:52.93,Default,,0,0,0,,Ngươi có biết không?
Dialogue: 0,0:37:53.45,0:37:56.12,Default,,0,0,0,,Lúc lão già kia chết,
Dialogue: 0,0:38:02.01,0:38:03.93,Default,,0,0,0,,nói gì mà muốn nhìn thấy đôi mắt này\Nthêm một lần nữa.
Dialogue: 0,0:38:05.56,0:38:08.16,Default,,0,0,0,,Chi bằng hôm nay\Nta giúp ông ta toại nguyện,
Dialogue: 0,0:38:08.64,0:38:10.05,Default,,0,0,0,,móc con mắt này ra
Dialogue: 0,0:38:10.60,0:38:11.20,Default,,0,0,0,,cúng trước linh đường của ông ta,
Dialogue: 0,0:38:20.24,0:38:21.76,Default,,0,0,0,,thế nào?
Dialogue: 0,0:38:22.08,0:38:24.56,Default,,0,0,0,,Vẫn y như hồi nhỏ,
Dialogue: 0,0:38:28.16,0:38:28.93,Default,,0,0,0,,không thích nói chuyện\Nmà thích học chó sủa.
Dialogue: 0,0:38:31.81,0:38:32.76,Default,,0,0,0,,Nói đi!
Dialogue: 0,0:38:37.24,0:38:38.41,Default,,0,0,0,,Ngươi nói đi!
Dialogue: 0,0:38:39.20,0:38:42.05,Default,,0,0,0,,Đàm Đài Minh Lãng,
Dialogue: 0,0:38:49.64,0:38:52.85,Default,,0,0,0,,ngươi cần gì phải lãng phí thời gian\Nôn lại chuyện cũ với ta ở đây.
Dialogue: 0,0:38:54.72,0:38:56.33,Default,,0,0,0,,Lần này ta nhìn nhầm người,\Nbị ngươi ám hại,
Dialogue: 0,0:39:00.12,0:39:01.68,Default,,0,0,0,,dám chơi dám chịu.
Dialogue: 0,0:39:02.60,0:39:04.24,Default,,0,0,0,,Tam đệ ơi tam đệ,
Dialogue: 0,0:39:04.53,0:39:06.53,Default,,0,0,0,,ta cũng không phải\Nngười có bản tính tàn nhẫn,
Dialogue: 0,0:39:07.45,0:39:08.68,Default,,0,0,0,,chỉ là chuyện đến nước này,\Nngươi muốn chết nhanh
Dialogue: 0,0:39:08.68,0:39:09.89,Default,,0,0,0,,cũng phải xem ta có đồng ý
Dialogue: 0,0:39:10.68,0:39:11.28,Default,,0,0,0,,ban cho ngươi ơn huệ này không.
Dialogue: 0,0:39:11.72,0:39:13.60,Default,,0,0,0,,Nào,
Dialogue: 0,0:39:28.33,0:39:30.33,Default,,0,0,0,,khiêng món quà ta tặng hắn lên đây.
Dialogue: 0,0:39:30.72,0:39:31.68,Default,,0,0,0,,Ngươi có biết vết sẹo trên nửa người ta,
Dialogue: 0,0:39:33.76,0:39:35.97,Default,,0,0,0,,từ đâu mà ra không?
Dialogue: 0,0:39:35.97,0:39:37.12,Default,,0,0,0,,Ta có biết hay không thì có ý nghĩa gì?
Dialogue: 0,0:39:37.89,0:39:40.68,Default,,0,0,0,,Tất nhiên là có ý nghĩa chứ.
Dialogue: 0,0:39:42.85,0:39:43.60,Default,,0,0,0,,Mọi thứ đều là nhờ ngươi ban cho đấy.
Dialogue: 0,0:39:44.28,0:39:45.53,Default,,0,0,0,,Ta ư?
Dialogue: 0,0:39:45.68,0:39:47.89,Default,,0,0,0,,Năm ta sáu tuổi,
Dialogue: 0,0:39:49.05,0:39:51.33,Default,,0,0,0,,ả yêu ma Nhu phi kia gọi thú dữ
Dialogue: 0,0:39:53.60,0:39:55.24,Default,,0,0,0,,hại chết mẫu hậu ta\Ntrong buổi săn bắn mùa thu.
Dialogue: 0,0:39:56.33,0:39:58.81,Default,,0,0,0,,[Dù triều đình và dân gian đều biết]
Dialogue: 0,0:39:59.81,0:40:02.05,Default,,0,0,0,,[Bài vị Hoàng hậu Hiếu Đoan Thuận Thánh Đại Cảnh]\N[hung thủ không ai khác ngoài Nhu phi,]
Dialogue: 0,0:40:02.05,0:40:03.08,Default,,0,0,0,,[nhưng phụ vương\Nlại một mực bênh vực bà ta,]
Dialogue: 0,0:40:03.33,0:40:04.89,Default,,0,0,0,,[biện bạch cho bà ta,]
Dialogue: 0,0:40:04.89,0:40:06.97,Default,,0,0,0,,[hoàn toàn không quan tâm đến chân tình]
Dialogue: 0,0:40:06.97,0:40:08.01,Default,,0,0,0,,- [và công lao lấy thân hộ giá của mẫu hậu ta.]\N- Im miệng.
Dialogue: 0,0:40:08.64,0:40:09.60,Default,,0,0,0,,Không cần bàn đến chuyện này nữa.
Dialogue: 0,0:40:10.05,0:40:11.89,Default,,0,0,0,,Ta sẽ tự quyết định.
Dialogue: 0,0:40:13.16,0:40:14.49,Default,,0,0,0,,[Thi thể mẫu hậu của ta chưa lạnh,]
Dialogue: 0,0:40:15.56,0:40:17.81,Default,,0,0,0,,[Nhu phi lại mang thai.]
Dialogue: 0,0:40:18.49,0:40:19.89,Default,,0,0,0,,[Cả vương cung đều đồn rằng,]
Dialogue: 0,0:40:19.89,0:40:22.16,Default,,0,0,0,,[nếu có thể hạ sinh một hoàng tử,]
Dialogue: 0,0:40:22.16,0:40:23.37,Default,,0,0,0,,[bà ta sẽ có thể danh chính ngôn thuận\Nlàm vương hậu.]
Dialogue: 0,0:40:23.37,0:40:25.20,Default,,0,0,0,,[Con trai bà ta]
Dialogue: 0,0:40:25.20,0:40:26.72,Default,,0,0,0,,[cũng sẽ trở thành\Nvị vua tương lai của nước Cảnh.]
Dialogue: 0,0:40:26.72,0:40:28.12,Default,,0,0,0,,Chỉ cần Nhu phi có thể sinh hoàng tử…
Dialogue: 0,0:40:28.12,0:40:29.68,Default,,0,0,0,,[Các cung nhân hầu hạ bên cạnh ta]
Dialogue: 0,0:40:30.76,0:40:32.16,Default,,0,0,0,,[cũng vì vậy mà ngày càng lạnh nhạt.]
Dialogue: 0,0:40:32.97,0:40:35.20,Default,,0,0,0,,[Vào một ngày đông như thế,]
Dialogue: 0,0:40:35.20,0:40:37.89,Default,,0,0,0,,[tẩm điện của ta đã xuất hiện]
Dialogue: 0,0:40:41.45,0:40:42.05,Default,,0,0,0,,[một chậu than lửa quên đậy lồng.]
Dialogue: 0,0:40:42.08,0:40:42.56,Default,,0,0,0,,Sao vậy?
Dialogue: 0,0:40:42.56,0:40:44.33,Default,,0,0,0,,Xảy ra chuyện rồi.
Dialogue: 0,0:40:44.33,0:40:45.45,Default,,0,0,0,,[Ta sẩy chân ngã vào than lửa,]
Dialogue: 0,0:40:46.97,0:40:49.12,Default,,0,0,0,,- [nguy hiểm tính mạng.]\N- Điện hạ.
Dialogue: 0,0:40:49.12,0:40:50.53,Default,,0,0,0,,[Phụ vương ta lại dỗ Nhu phi ngủ trưa,]
Dialogue: 0,0:40:53.89,0:40:55.20,Default,,0,0,0,,[mãi mà không đến.]
Dialogue: 0,0:40:56.33,0:40:57.68,Default,,0,0,0,,[Không biết đã đợi bao lâu,]
Dialogue: 0,0:40:58.37,0:41:00.68,Default,,0,0,0,,[cuối cùng ông ta cũng đến,]
Dialogue: 0,0:41:01.81,0:41:03.89,Default,,0,0,0,,[nhưng lại chẳng thèm ngó ngàng đến ta.]
Dialogue: 0,0:41:05.05,0:41:08.93,Default,,0,0,0,,[Ta chỉ nghe thấy\Nông ta đứng ngoài nói một câu.]
Dialogue: 0,0:41:10.01,0:41:14.01,Default,,0,0,0,,Minh Lãng bị tổn hại da tóc,\Nvẻ ngoài không may mắn,
Dialogue: 0,0:41:19.80,0:41:23.93,Default,,0,0,0,,e là sau này khó kế thừa ngôi vua.
Dialogue: 0,0:41:26.01,0:41:29.24,Default,,0,0,0,,Tất cả đều là lỗi của ngươi và Nhu phi.
Dialogue: 0,0:41:30.49,0:41:32.64,Default,,0,0,0,,Ngươi phải trả món nợ này.
Dialogue: 0,0:41:35.85,0:41:36.57,Default,,0,0,0,,Thử xem than lửa nóng nhường nào đi.
Dialogue: 0,0:41:36.76,0:41:38.64,Default,,0,0,0,,Đại điện hạ.
Dialogue: 0,0:41:39.57,0:41:40.89,Default,,0,0,0,,Ta đã hứa là\Nsẽ giúp ngài giết Đàm Đài Tẫn,
Dialogue: 0,0:41:41.09,0:41:42.57,Default,,0,0,0,,nhưng không đồng ý
Dialogue: 0,0:41:42.57,0:41:43.45,Default,,0,0,0,,trơ mắt nhìn ngài hành hạ ngài ấy.
Dialogue: 0,0:41:44.05,0:41:45.64,Default,,0,0,0,,Bà im đi!
Dialogue: 0,0:41:48.57,0:41:49.93,Default,,0,0,0,,Nhìn cho rõ vị trí của mình.
Dialogue: 0,0:41:50.57,0:41:52.05,Default,,0,0,0,,Ta đã hiểu câu chuyện của ngươi,
Dialogue: 0,0:41:52.68,0:41:53.68,Default,,0,0,0,,nhưng nỗi đau khổ của ngươi\Nkhông liên quan đến ta.
Dialogue: 0,0:41:54.45,0:41:56.41,Default,,0,0,0,,Nếu muốn báo thù,
Dialogue: 0,0:41:56.80,0:41:57.76,Default,,0,0,0,,thì người ngươi nên tìm là Đàm Đài Vô Cực,
Dialogue: 0,0:41:57.76,0:41:58.80,Default,,0,0,0,,ta không nợ ngươi gì cả.
Dialogue: 0,0:41:59.68,0:42:01.24,Default,,0,0,0,,Ngươi nợ ta.
Dialogue: 0,0:42:02.57,0:42:04.76,Default,,0,0,0,,Rõ ràng đều là lỗi của ngươi.
Dialogue: 0,0:42:05.05,0:42:06.76,Default,,0,0,0,,Ta muốn ngươi nếm đủ mọi khổ sở.
Dialogue: 0,0:42:06.80,0:42:09.32,Default,,0,0,0,,Ta muốn giày vò ngươi\Nđến thân tàn ma dại.
Dialogue: 0,0:42:10.57,0:42:11.12,Default,,0,0,0,,Ta muốn ngươi quỳ xuống xin ta giết ngươi.
Dialogue: 0,0:42:12.24,0:42:13.89,Default,,0,0,0,,Hôm nay…
Dialogue: 0,0:42:14.76,0:42:15.97,Default,,0,0,0,,Dù sao hôm nay ta cũng không thoát được,
Dialogue: 0,0:42:17.09,0:42:18.12,Default,,0,0,0,,nhưng ta muốn
Dialogue: 0,0:42:23.64,0:42:24.20,Default,,0,0,0,,làm rõ một việc.
Dialogue: 0,0:42:26.09,0:42:27.64,Default,,0,0,0,,Được.
Dialogue: 0,0:42:28.97,0:42:30.32,Default,,0,0,0,,Ta sẽ cho ngươi cơ hội này,
Dialogue: 0,0:43:12.68,0:43:13.28,Default,,0,0,0,,để ngươi chết được rõ ràng.
Dialogue: 0,0:43:16.85,0:43:18.45,Default,,0,0,0,,Cô cô,
Dialogue: 0,0:43:25.60,0:43:27.41,Default,,0,0,0,,sao cô cô lại phản bội ta?
Dialogue: 0,0:43:28.12,0:43:29.09,Default,,0,0,0,,Lan An không nên phản bội điện hạ,
Dialogue: 0,0:43:30.05,0:43:30.97,Default,,0,0,0,,là lỗi của Lan An.
Dialogue: 0,0:43:31.41,0:43:32.80,Default,,0,0,0,,Nhưng mà,
Dialogue: 0,0:43:35.49,0:43:37.01,Default,,0,0,0,,bây giờ Lan An đã có Phù Nhai,
Dialogue: 0,0:43:41.32,0:43:42.64,Default,,0,0,0,,có con gái của mình.
Dialogue: 0,0:43:44.93,0:43:47.37,Default,,0,0,0,,Vì con gái của cô cô?
Dialogue: 0,0:43:47.80,0:43:48.41,Default,,0,0,0,,Trước đây cô cô\Nkhông phải người yếu đuối như vậy.
Dialogue: 0,0:43:49.68,0:43:50.89,Default,,0,0,0,,Phải.
Dialogue: 0,0:43:52.05,0:43:55.68,Default,,0,0,0,,Trước đây ta không như vậy.
Dialogue: 0,0:43:56.32,0:43:57.53,Default,,0,0,0,,Nhưng khi một người đã có tình cảm
Dialogue: 0,0:43:58.20,0:43:59.89,Default,,0,0,0,,thì sẽ có vướng bận,
Dialogue: 0,0:44:01.68,0:44:04.09,Default,,0,0,0,,không còn vững vàng nữa.
Dialogue: 0,0:44:04.89,0:44:07.20,Default,,0,0,0,,Mấy năm trước, Phù Nhai không may bị lạc.
Dialogue: 0,0:44:08.16,0:44:09.93,Default,,0,0,0,,Nay Minh Lãng điện hạ tìm nó về cho ta,
Dialogue: 0,0:44:10.49,0:44:12.60,Default,,0,0,0,,Lan An không muốn phản bội điện hạ,
Dialogue: 0,0:44:13.64,0:44:14.60,Default,,0,0,0,,nhưng Lan An càng không muốn mất con gái.
Dialogue: 0,0:44:15.37,0:44:16.68,Default,,0,0,0,,Trước đây,
Dialogue: 0,0:44:18.45,0:44:19.76,Default,,0,0,0,,ta không có con cái,
Dialogue: 0,0:44:20.57,0:44:23.76,Default,,0,0,0,,xem ngài như con mình.
Dialogue: 0,0:44:24.76,0:44:26.41,Default,,0,0,0,,Nhưng bao năm nay ông trời thương ta,
Dialogue: 0,0:44:27.37,0:44:28.97,Default,,0,0,0,,cho ta có con gái của mình.
Dialogue: 0,0:44:30.28,0:44:34.05,Default,,0,0,0,,So với sự u ám khó hiểu của ngài,
Dialogue: 0,0:44:36.89,0:44:38.97,Default,,0,0,0,,con gái ta vô cùng trong sáng và tốt đẹp.
Dialogue: 0,0:44:40.09,0:44:41.85,Default,,0,0,0,,Nếu nhất định\Nphải chọn một người sống tiếp,
Dialogue: 0,0:44:43.89,0:44:44.53,Default,,0,0,0,,ta nghĩ sẽ chẳng ai chọn ngài đâu.
Dialogue: 0,0:44:47.57,0:44:49.53,Default,,0,0,0,,Vậy ư?
Dialogue: 0,0:44:50.89,0:44:52.05,Default,,0,0,0,,Vậy tình cảm giữa chúng ta thì sao?
Dialogue: 0,0:44:52.85,0:44:54.97,Default,,0,0,0,,Lẽ nào cô cô nhẫn tâm…
Dialogue: 0,0:44:56.09,0:44:57.37,Default,,0,0,0,,Điện hạ.
Dialogue: 0,0:45:03.97,0:45:05.05,Default,,0,0,0,,Ta đã biết tại sao
Dialogue: 0,0:45:06.28,0:45:08.12,Default,,0,0,0,,Oánh Tâm phát điên rồi.
Dialogue: 0,0:45:08.12,0:45:09.89,Default,,0,0,0,,Đừng nói với ta là,
Dialogue: 0,0:45:10.16,0:45:11.53,Default,,0,0,0,,cô cô vì kẻ phản bội như Oánh Tâm...
Dialogue: 0,0:45:11.85,0:45:14.89,Default,,0,0,0,,Đó chỉ là nguyên nhân cuối cùng của ta,
Dialogue: 0,0:45:16.49,0:45:18.85,Default,,0,0,0,,để ta thấy rõ,
Dialogue: 0,0:45:27.12,0:45:28.68,Default,,0,0,0,,trong lồng ngực ngài\Nkhông chứa trái tim của con người,
Dialogue: 0,0:45:28.85,0:45:32.05,Default,,0,0,0,,mà là một khối sắt lạnh lẽo.
Dialogue: 0,0:45:32.49,0:45:34.01,Default,,0,0,0,,Là bà ta muốn hại ta trước.
Dialogue: 0,0:45:34.45,0:45:35.89,Default,,0,0,0,,Chính ta và Oánh Tâm nuôi ngài khôn lớn.
Dialogue: 0,0:45:36.12,0:45:40.12,Default,,0,0,0,,Nhưng với ngài mà nói,
Dialogue: 0,0:45:40.49,0:45:42.01,Default,,0,0,0,,sự phản bội của hai bọn ta
Dialogue: 0,0:45:42.01,0:45:43.80,Default,,0,0,0,,không khác gì sự phản bội\Ncủa tất cả những người khác.
Dialogue: 0,0:45:45.57,0:45:46.68,Default,,0,0,0,,Bọn ta không hề đặc biệt,
Dialogue: 0,0:45:47.68,0:45:49.32,Default,,0,0,0,,đây là điều đáng sợ nhất.
Dialogue: 0,0:45:49.68,0:45:50.85,Default,,0,0,0,,Ngài thảnh thơi lợi dụng
Dialogue: 0,0:45:50.85,0:45:52.24,Default,,0,0,0,,người tốt với ngài,
Dialogue: 0,0:45:52.32,0:45:53.60,Default,,0,0,0,,còn kẻ không tốt với ngài
Dialogue: 0,0:45:53.85,0:45:54.89,Default,,0,0,0,,thì ngài sát hại tàn nhẫn.
Dialogue: 0,0:45:54.89,0:45:56.89,Default,,0,0,0,,Lẽ nào không phải vậy ư?
Dialogue: 0,0:45:59.01,0:46:04.37,Default,,0,0,0,,Làm vậy có gì không đúng?
Dialogue: 0,0:46:06.89,0:46:08.37,Default,,0,0,0,,Nhưng con người không nên như vậy.
Dialogue: 0,0:46:15.32,0:46:17.12,Default,,0,0,0,,Lần này có thể\Nlợi dụng Diệp Tịch Vụ để bẫy ngài
Dialogue: 0,0:46:18.85,0:46:22.24,Default,,0,0,0,,là chuyện ta không ngờ đến.
Dialogue: 0,0:46:22.68,0:46:25.64,Default,,0,0,0,,Chính cô cô đã thả Diệp Tịch Vụ.
Dialogue: 0,0:46:26.89,0:46:28.12,Default,,0,0,0,,Chính cô cô đã cởi thừng Nhược Thủy\Ncho cô ta,
Dialogue: 0,0:46:28.12,0:46:29.20,Default,,0,0,0,,sau đó lại nói dối là đã tìm thấy cô ta,
Dialogue: 0,0:46:31.49,0:46:33.01,Default,,0,0,0,,lệnh cho tàu cập bến.
Dialogue: 0,0:46:33.01,0:46:34.85,Default,,0,0,0,,Nếu không phải như vậy,
Dialogue: 0,0:46:37.05,0:46:37.68,Default,,0,0,0,,dùng thuyền nhỏ cưỡng chế lên bờ,
Dialogue: 0,0:46:38.80,0:46:40.32,Default,,0,0,0,,e là sẽ thương vong nhiều hơn, đúng không?
Dialogue: 0,0:46:41.32,0:46:43.09,Default,,0,0,0,,Ngài xem.
Dialogue: 0,0:46:43.09,0:46:44.53,Default,,0,0,0,,Một khi con người có tình cảm
Dialogue: 0,0:46:45.72,0:46:47.37,Default,,0,0,0,,thì sẽ không còn vững vàng nữa.
Dialogue: 0,0:46:48.57,0:46:50.64,Default,,0,0,0,,Thế thì cô đoán sai rồi.
Dialogue: 0,0:46:52.20,0:46:54.97,Default,,0,0,0,,Với ta mà nói, Diệp Tịch Vụ
Dialogue: 0,0:46:55.01,0:46:57.37,Default,,0,0,0,,không có gì đặc biệt hết.
Dialogue: 0,0:46:57.76,0:46:59.60,Default,,0,0,0,,Khó khăn lắm mới có thể có người
Dialogue: 0,0:47:00.24,0:47:01.53,Default,,0,0,0,,khiến ngài vướng bận đôi chút,
Dialogue: 0,0:47:03.57,0:47:05.12,Default,,0,0,0,,mà lại bị ta lợi dụng để giăng bẫy,
Dialogue: 0,0:47:22.80,0:47:24.89,Default,,0,0,0,,dồn ngài vào chỗ chết.
Dialogue: 0,0:47:27.49,0:47:30.76,Default,,0,0,0,,Châm chọc biết bao!
Dialogue: 0,0:47:33.57,0:47:34.24,Default,,0,0,0,,Cô cô, ta hỏi cô,
Dialogue: 0,0:47:38.89,0:47:40.20,Default,,0,0,0,,cô có hối hận vì phản bội ta không?
Dialogue: 0,0:47:44.57,0:47:46.24,Default,,0,0,0,,Con à,
Dialogue: 0,0:47:46.97,0:47:49.45,Default,,0,0,0,,ta không hối hận.
Dialogue: 0,0:47:54.24,0:47:55.53,Default,,0,0,0,,Năm xưa ở lãnh cung nước Cảnh,
Dialogue: 0,0:47:58.32,0:48:03.16,Default,,0,0,0,,ta dùng máu ở đầu ngón tay của mình\Ncứu sống ngài.
Dialogue: 0,0:48:06.85,0:48:07.37,Default,,0,0,0,,[Nhân quả báo ứng.]
Dialogue: 0,0:48:12.80,0:48:13.57,Default,,0,0,0,,Hôm nay xem như ta chọn thay ngài.
Dialogue: 0,0:48:16.85,0:48:17.93,Default,,0,0,0,,Được.
Dialogue: 0,0:48:20.09,0:48:21.09,Default,,0,0,0,,Tốt.
Dialogue: 0,0:48:26.68,0:48:27.68,Default,,0,0,0,,Tốt lắm!
Dialogue: 0,0:48:47.76,0:48:49.93,Default,,0,0,0,,Đàm Đài Minh Lãng.
Dialogue: 0,0:48:50.68,0:48:51.76,Default,,0,0,0,,Ra tay đi.
Dialogue: 0,0:48:51.93,0:48:53.97,Default,,0,0,0,,[Ta có thứ này muốn tặng cho cô cô.]
Dialogue: 0,0:48:56.32,0:48:56.93,Default,,0,0,0,,[Ta nghe nói người đời]
Dialogue: 0,0:49:00.01,0:49:01.05,Default,,0,0,0,,[hay ví loại cỏ này với mẫu thân.]
Dialogue: 0,0:49:35.80,0:49:37.09,Default,,0,0,0,,[Chi bằng,]
Dialogue: 0,0:49:37.53,0:49:39.05,Default,,0,0,0,,[cứ tặng nó cho cô cô đi.]
Dialogue: 0,0:49:39.05,0:49:40.41,Default,,0,0,0,,Châm độc ở mắt trái của ngươi
Dialogue: 0,0:49:40.41,0:49:41.89,Default,,0,0,0,,mà khuếch tán ra kinh mạch toàn thân,
Dialogue: 0,0:49:44.16,0:49:45.64,Default,,0,0,0,,nôn ra máu ba lần thì sẽ chết.
Dialogue: 0,0:49:46.57,0:49:47.49,Default,,0,0,0,,Sao ngươi phải khổ sở giãy giụa?
Dialogue: 0,0:49:58.37,0:49:59.28,Default,,0,0,0,,Độc này lại ghê gớm như vậy.
Dialogue: 0,0:49:59.80,0:50:02.16,Default,,0,0,0,,Đa tạ đã nhắc nhở.
Dialogue: 0,0:50:07.80,0:50:08.80,Default,,0,0,0,,Điên rồi à?
Dialogue: 0,0:50:09.60,0:50:10.72,Default,,0,0,0,,Đến chuyện cắt máu thải độc\Nmà ngươi cũng nghĩ ra.
Dialogue: 0,0:50:11.76,0:50:13.80,Default,,0,0,0,,Ta không điên.
Dialogue: 0,0:50:16.41,0:50:19.09,Default,,0,0,0,,Ta chỉ tò mò,
Dialogue: 0,0:50:21.45,0:50:23.32,Default,,0,0,0,,rốt cuộc ta phát độc bỏ mạng nhanh hơn,
Dialogue: 0,0:50:25.01,0:50:25.89,Default,,0,0,0,,hay cạn máu mà chết nhanh hơn?
Dialogue: 0,0:50:28.64,0:50:29.76,Default,,0,0,0,,Ngươi chết đến nơi rồi còn cố chống cự.
Dialogue: 0,0:50:32.45,0:50:34.60,Default,,0,0,0,,Thật đáng thương.
Dialogue: 0,0:50:34.76,0:50:35.76,Default,,0,0,0,,Đàm Đài Minh Lãng,
Dialogue: 0,0:50:37.01,0:50:39.85,Default,,0,0,0,,hãy nhớ những gì ngươi làm hôm nay.
Dialogue: 0,0:51:00.49,0:51:05.43,Default,,0,0,0,,Từ nay về sau,
Dialogue: 0,0:51:20.45,0:51:28.21,Default,,0,0,0,,ngươi sẽ không có ngày nào được ngủ yên.
Dialogue: 0,0:51:28.21,0:51:36.01,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:51:36.01,0:51:43.13,Default,,0,0,0,,♪Nỗi lòng phàm tục\Nlà ngước mắt lên trăng bỗng khuyết♪
Dialogue: 0,0:51:43.73,0:51:47.61,Default,,0,0,0,,♪Hồng trần là đôi mắt thấy\Nmuôn hoa rụng giữa cơn mưa tuyết♪
Dialogue: 0,0:51:47.61,0:51:51.81,Default,,0,0,0,,♪Trắc ẩn là\Nmột cánh bướm trong lòng khi tan biến♪
Dialogue: 0,0:51:53.37,0:51:56.97,Default,,0,0,0,,♪Tỉnh ngộ là gột rửa hồi ức\Ntrong nước đục♪
Dialogue: 0,0:51:56.97,0:52:00.21,Default,,0,0,0,,♪Từ ấy chẳng gặp nhau♪
Dialogue: 0,0:52:00.77,0:52:04.89,Default,,0,0,0,,♪Ta từng thấy lời dịu dàng, từng nở hoa♪
Dialogue: 0,0:52:04.89,0:52:08.41,Default,,0,0,0,,♪Cay mắt đến nỗi nói mớ♪
Dialogue: 0,0:52:09.01,0:52:12.45,Default,,0,0,0,,♪Tơ tình vấn vương, mái ngói dễ vỡ♪
Dialogue: 0,0:52:12.45,0:52:16.13,Default,,0,0,0,,♪Một vòng tay có sự sợ hãi vô tận♪
Dialogue: 0,0:52:16.21,0:52:20.33,Default,,0,0,0,,♪Ta kính trọng người biết bao,\Nthời gian thấm thoát thoi đưa♪
Dialogue: 0,0:52:20.33,0:52:28.09,Default,,0,0,0,,♪Từng vững tin được yêu trong phút chốc♪
Dialogue: 0,0:52:30.09,0:52:33.49,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:52:33.61,0:52:37.01,Default,,0,0,0,,♪Sự thành kính tựa ánh trăng không tì vết♪
Dialogue: 0,0:52:37.57,0:52:41.77,Default,,0,0,0,,♪Hãy lắng nghe hơi thở của đóa hoa♪
Dialogue: 0,0:52:41.77,0:52:45.97,Default,,0,0,0,,♪Như sự phồn hoa của chúng sinh muôn loài♪
Dialogue: 0,0:52:45.97,0:52:49.29,Default,,0,0,0,,♪Dẫu đi bao lâu, sao trời hay bão cát♪
Dialogue: 0,0:52:49.29,0:52:53.25,Default,,0,0,0,,♪Ánh trăng là bộ giáp của ta♪
Dialogue: 0,0:52:53.41,0:52:56.93,Default,,0,0,0,,♪Ta mong sau này người mang theo vết sẹo♪
Dialogue: 0,0:52:56.93,0:53:04.57,Default,,0,0,0,,♪Cũng thử sống dịu dàng một phen♪
Dialogue: 0,0:53:04.57,0:53:11.97,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:53:11.97,0:53:20.61,Default,,0,0,0,,♪Yêu lại người từng căm hận♪
