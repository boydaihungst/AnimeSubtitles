Dialogue: 0,0:00:00.00,0:00:23.20,Default,,0,0,0,,Nhóm dịch đang gắng sức làm việc, mau chóng thay thế bản phụ đề cuối, cảm ơn bạn đã kiên nhẫn chờ đợi.
Dialogue: 0,0:00:23.20,0:00:26.96,Default,,0,0,0,,♪Đêm tối, trăng ướt, máu lạnh♪
Dialogue: 0,0:00:27.40,0:00:30.72,Default,,0,0,0,,♪Phơi bày trước\Nđôi mắt sợ ánh sáng của ta♪
Dialogue: 0,0:00:31.04,0:00:34.48,Default,,0,0,0,,♪Là sáng bừng hay ấm áp♪
Dialogue: 0,0:00:34.68,0:00:38.04,Default,,0,0,0,,♪Ta chỉ có thể suy đoán bằng trực giác♪
Dialogue: 0,0:00:38.92,0:00:46.16,Default,,0,0,0,,♪Ôi, tình yêu khuynh thế như ngọc,\Ntạo nên ta♪
Dialogue: 0,0:00:46.72,0:00:53.88,Default,,0,0,0,,♪Ôi, tơ tình vương vấn♪
Dialogue: 0,0:00:55.36,0:00:58.92,Default,,0,0,0,,♪Ta không sợ trên cõi đời này♪
Dialogue: 0,0:00:59.28,0:01:02.80,Default,,0,0,0,,♪Chúng sinh đối xử với ta ra sao♪
Dialogue: 0,0:01:03.44,0:01:06.60,Default,,0,0,0,,♪Đột phá, vùng vẫy♪
Dialogue: 0,0:01:06.92,0:01:11.20,Default,,0,0,0,,♪Làm sao để phân biệt chính tà, thiện ác♪
Dialogue: 0,0:01:11.64,0:01:14.92,Default,,0,0,0,,♪Từng có khoảnh khắc yếu đuối♪
Dialogue: 0,0:01:15.28,0:01:18.64,Default,,0,0,0,,♪Dùng nụ hôn tình yêu\Nđể vết thương lành lại♪
Dialogue: 0,0:01:19.16,0:01:22.60,Default,,0,0,0,,♪Sự tồn tại của ta♪
Dialogue: 0,0:01:23.12,0:01:29.64,Default,,0,0,0,,♪Sẽ không vì gai nhọn mà gãy cánh♪
Dialogue: 0,0:01:31.40,0:01:36.04,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:01:36.04,0:01:39.00,Default,,0,0,0,,[Tập 39]
Dialogue: 0,0:01:39.12,0:01:42.79,Default,,0,0,0,,Thiên hạ vẩn đục, vạn cổ đồng bi.
Dialogue: 0,0:01:43.23,0:01:46.92,Default,,0,0,0,,Thiên hạ vẩn đục, vạn cổ đồng bi.
Dialogue: 0,0:02:11.59,0:02:13.15,Default,,0,0,0,,[Sao nàng còn quay trở lại đây?]
Dialogue: 0,0:02:24.91,0:02:26.19,Default,,0,0,0,,[Thú vị đấy.]
Dialogue: 0,0:02:26.43,0:02:28.75,Default,,0,0,0,,[Không ngờ kẻ đến lại là chút ngọt ngào\Ntrong máu hắn.]
Dialogue: 0,0:02:37.00,0:02:38.47,Default,,0,0,0,,Cô đến để giết ta sao?
Dialogue: 0,0:02:38.84,0:02:39.43,Default,,0,0,0,,Không.
Dialogue: 0,0:02:40.96,0:02:42.36,Default,,0,0,0,,Ta đến nghe chàng nói cho ta biết
Dialogue: 0,0:02:43.19,0:02:44.87,Default,,0,0,0,,nguyên nhân chàng làm những việc này.
Dialogue: 0,0:02:46.56,0:02:47.91,Default,,0,0,0,,Khi xưa chàng thề thốt với ta
Dialogue: 0,0:02:47.91,0:02:49.24,Default,,0,0,0,,là sẽ không trở thành Ma Thần.
Dialogue: 0,0:02:49.80,0:02:51.00,Default,,0,0,0,,Ta tin tưởng không hề nghi ngờ.
Dialogue: 0,0:02:52.08,0:02:53.96,Default,,0,0,0,,Nhưng bây giờ\Ntại sao lại thành ra thế này?
Dialogue: 0,0:03:01.28,0:03:02.28,Default,,0,0,0,,Nói cho ta đi!
Dialogue: 0,0:03:05.43,0:03:07.08,Default,,0,0,0,,[Bởi vì ta hận cô.]
Dialogue: 0,0:03:16.00,0:03:17.00,Default,,0,0,0,,Năm trăm năm trước,
Dialogue: 0,0:03:18.47,0:03:20.36,Default,,0,0,0,,ta lấy cô làm thê tử,
Dialogue: 0,0:03:21.47,0:03:23.71,Default,,0,0,0,,sẵn sàng chia sẻ cả thiên hạ với cô.
Dialogue: 0,0:03:25.19,0:03:27.84,Default,,0,0,0,,Nhưng cô lại phản bội ta\Ntrong ngày thành thân,
Dialogue: 0,0:03:28.47,0:03:30.08,Default,,0,0,0,,muốn lấy mạng ta.
Dialogue: 0,0:03:30.31,0:03:31.00,Default,,0,0,0,,Về sau,
Dialogue: 0,0:03:31.24,0:03:33.96,Default,,0,0,0,,ta tìm kiếm cô suốt 500 năm trời\Ntrong sông U Minh,
Dialogue: 0,0:03:34.63,0:03:37.15,Default,,0,0,0,,bị ăn mòn tới mình đầy thương tích,\Nđau đớn toàn thân
Dialogue: 0,0:03:37.15,0:03:38.36,Default,,0,0,0,,hết ngày này qua ngày khác.
Dialogue: 0,0:03:39.71,0:03:40.47,Default,,0,0,0,,Còn cô thì sao?
Dialogue: 0,0:03:41.87,0:03:44.28,Default,,0,0,0,,Cô lại làm tiên tử ở Thiên Trì,
Dialogue: 0,0:03:45.00,0:03:46.43,Default,,0,0,0,,núi Trường Trạch,
Dialogue: 0,0:03:47.36,0:03:48.59,Default,,0,0,0,,không hỏi việc đời.
Dialogue: 0,0:03:57.91,0:03:58.59,Default,,0,0,0,,Cuối cùng,
Dialogue: 0,0:04:00.00,0:04:01.96,Default,,0,0,0,,cô chỉ nói một câu nhẹ nhàng,
Dialogue: 0,0:04:02.43,0:04:03.43,Default,,0,0,0,,là cô lừa dối ta,
Dialogue: 0,0:04:03.56,0:04:06.19,Default,,0,0,0,,giấu giếm ta, tổn thương ta, giết ta,
Dialogue: 0,0:04:06.47,0:04:08.19,Default,,0,0,0,,đều là vì chúng sinh trong thiên hạ.
Dialogue: 0,0:04:11.36,0:04:13.15,Default,,0,0,0,,Cô nghĩ ta có thể tha thứ cho cô ư?
Dialogue: 0,0:04:13.75,0:04:15.24,Default,,0,0,0,,Cô thấy như vậy có công bằng không?
Dialogue: 0,0:04:27.83,0:04:28.83,Default,,0,0,0,,Chẳng phải cô nói,
Dialogue: 0,0:04:29.63,0:04:31.36,Default,,0,0,0,,cô muốn đảo ngược số mệnh,
Dialogue: 0,0:04:31.92,0:04:34.51,Default,,0,0,0,,muốn ngăn cản Ma Thần\Nhủy diệt tam giới sao?
Dialogue: 0,0:04:47.60,0:04:49.60,Default,,0,0,0,,Cô nhìn mọi thứ trước mắt đi,
Dialogue: 0,0:04:50.07,0:04:51.80,Default,,0,0,0,,tất cả đều là quả báo của cô,
Dialogue: 0,0:04:54.00,0:04:55.87,Default,,0,0,0,,cũng là quả báo của Diệp Tịch Vụ.
Dialogue: 0,0:05:00.12,0:05:01.39,Default,,0,0,0,,Cô từng nói,
Dialogue: 0,0:05:03.19,0:05:04.92,Default,,0,0,0,,ta sinh ra đã là Ma Thần.
Dialogue: 0,0:05:06.39,0:05:07.56,Default,,0,0,0,,Trong lòng ta,
Dialogue: 0,0:05:09.56,0:05:12.75,Default,,0,0,0,,căm hận luôn sâu đậm hơn tình yêu.
Dialogue: 0,0:05:20.92,0:05:21.83,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:05:23.48,0:05:24.72,Default,,0,0,0,,chàng nói dối.
Dialogue: 0,0:05:49.92,0:05:51.00,Default,,0,0,0,,Lê Tô Tô,
Dialogue: 0,0:05:55.04,0:05:56.92,Default,,0,0,0,,đừng tự cho là mình thông minh.
Dialogue: 0,0:06:03.12,0:06:04.24,Default,,0,0,0,,[Giết cô ta.]
Dialogue: 0,0:06:04.68,0:06:05.48,Default,,0,0,0,,[Giết cô ta rồi,]
Dialogue: 0,0:06:05.48,0:06:07.87,Default,,0,0,0,,[ngươi sẽ có thể\Ncắt đứt số phận chết tiệt này.]
Dialogue: 0,0:06:15.12,0:06:16.07,Default,,0,0,0,,[Giết cô ta rồi,]
Dialogue: 0,0:06:16.63,0:06:19.00,Default,,0,0,0,,[ngươi mới có thể thật sự trở thành ta.]
Dialogue: 0,0:06:19.80,0:06:22.83,Default,,0,0,0,,[Đàm Đài Tẫn, ra tay đi.]
Dialogue: 0,0:06:24.51,0:06:25.48,Default,,0,0,0,,[Là Ma Thần.]
Dialogue: 0,0:06:26.36,0:06:27.31,Default,,0,0,0,,[Tay của ta.]
Dialogue: 0,0:06:54.36,0:06:56.72,Default,,0,0,0,,Cô ta là con gái của Đế Miện và Sơ Hoàng.
Dialogue: 0,0:06:58.19,0:07:01.12,Default,,0,0,0,,Một người phụ nữ ngu ngốc\Nvà một kẻ phản bội
Dialogue: 0,0:07:03.04,0:07:04.95,Default,,0,0,0,,thì có thể\Nsinh được dòng giống tốt đẹp gì chứ?
Dialogue: 0,0:07:09.75,0:07:10.63,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:07:11.56,0:07:13.83,Default,,0,0,0,,cô ta dùng gương Quá Khứ để đến bên ngươi
Dialogue: 0,0:07:14.27,0:07:16.07,Default,,0,0,0,,chính là để giết ngươi.
Dialogue: 0,0:07:16.80,0:07:19.43,Default,,0,0,0,,Nàng ấy đến đây vì muốn cứu ta.
Dialogue: 0,0:07:20.39,0:07:21.80,Default,,0,0,0,,Ngươi đã là Ma Thần,
Dialogue: 0,0:07:22.27,0:07:23.63,Default,,0,0,0,,cần gì ai cứu chứ?
Dialogue: 0,0:07:24.63,0:07:25.68,Default,,0,0,0,,Giết cô ta đi.
Dialogue: 0,0:07:26.07,0:07:26.72,Default,,0,0,0,,Giết cô ta rồi,
Dialogue: 0,0:07:26.72,0:07:29.36,Default,,0,0,0,,ngươi sẽ không phải chịu\Nbất kỳ nỗi đau nào nữa.
Dialogue: 0,0:07:32.68,0:07:35.31,Default,,0,0,0,,[Giết cô ta, ra tay đi.]
Dialogue: 0,0:07:35.75,0:07:37.39,Default,,0,0,0,,[Ngươi còn do dự gì chứ?]
Dialogue: 0,0:07:38.00,0:07:40.31,Default,,0,0,0,,[Giết cô ta…]
Dialogue: 0,0:07:59.31,0:08:00.75,Default,,0,0,0,,Cô ta sắp chết rồi,
Dialogue: 0,0:08:01.51,0:08:03.72,Default,,0,0,0,,nhưng ngươi vẫn bị ta nhốt ở đây,
Dialogue: 0,0:08:04.19,0:08:05.72,Default,,0,0,0,,chẳng làm gì được.
Dialogue: 0,0:08:07.19,0:08:08.16,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:08:10.87,0:08:12.56,Default,,0,0,0,,từ khi ngươi sinh ra đến nay,
Dialogue: 0,0:08:13.56,0:08:15.19,Default,,0,0,0,,chỉ cần là người có liên quan đến ngươi
Dialogue: 0,0:08:16.00,0:08:17.60,Default,,0,0,0,,thì đều sẽ trở nên bất hạnh.
Dialogue: 0,0:08:20.60,0:08:22.43,Default,,0,0,0,,Bọn họ tên là gì ấy nhỉ,
Dialogue: 0,0:08:23.75,0:08:25.24,Default,,0,0,0,,ta không nhớ rõ cho lắm.
Dialogue: 0,0:08:27.60,0:08:29.68,Default,,0,0,0,,Nữ nhân tộc Di Nguyệt sinh ra ngươi,
Dialogue: 0,0:08:32.96,0:08:35.03,Default,,0,0,0,,người phụ thân hận ngươi tận xương tủy,
Dialogue: 0,0:08:37.75,0:08:39.84,Default,,0,0,0,,đám tiện tỳ hầu hạ ngươi,
Dialogue: 0,0:08:41.67,0:08:44.39,Default,,0,0,0,,còn cả người bạn kia của ngươi nữa.
Dialogue: 0,0:08:50.15,0:08:51.15,Default,,0,0,0,,Dĩ nhiên,
Dialogue: 0,0:08:51.75,0:08:52.96,Default,,0,0,0,,còn cả lão già tóc trắng
Dialogue: 0,0:08:52.96,0:08:55.12,Default,,0,0,0,,dạy ngươi đống đạo lý nhàm chán kia nữa.
Dialogue: 0,0:08:55.87,0:08:58.00,Default,,0,0,0,,Ta thấy ông ta thú vị nhất đấy.
Dialogue: 0,0:08:58.67,0:09:00.84,Default,,0,0,0,,Ngươi có biết\Nông ta thú vị ở điểm nào không?
Dialogue: 0,0:09:01.44,0:09:03.79,Default,,0,0,0,,Ta cho rằng con lừa ấy là thú vị nhất,
Dialogue: 0,0:09:04.00,0:09:05.96,Default,,0,0,0,,rất muốn mang về cưỡi thử.
Dialogue: 0,0:09:13.36,0:09:14.87,Default,,0,0,0,,Chúng đều là loài giun dế.
Dialogue: 0,0:09:15.20,0:09:17.24,Default,,0,0,0,,Giun dế làm sao xứng sánh vai với ta,
Dialogue: 0,0:09:17.48,0:09:19.67,Default,,0,0,0,,làm sao xứng để ngươi coi trọng?
Dialogue: 0,0:09:20.20,0:09:22.36,Default,,0,0,0,,Vận hạn của chúng đều là số phận sắp đặt.
Dialogue: 0,0:09:23.32,0:09:26.24,Default,,0,0,0,,Thế gian này\Nchưa từng thật lòng yêu thương ngươi,
Dialogue: 0,0:09:26.48,0:09:27.91,Default,,0,0,0,,chỉ có khổ nạn
Dialogue: 0,0:09:28.03,0:09:30.39,Default,,0,0,0,,mới là chốn về vĩnh hằng của ngươi.
Dialogue: 0,0:09:38.32,0:09:39.79,Default,,0,0,0,,Tới đây, Đàm Đài Tẫn.
Dialogue: 0,0:09:40.24,0:09:41.32,Default,,0,0,0,,Tới chỗ ta,
Dialogue: 0,0:09:41.72,0:09:44.03,Default,,0,0,0,,ngươi sẽ có thể thống trị hết thảy.
Dialogue: 0,0:10:06.60,0:10:07.32,Default,,0,0,0,,Không.
Dialogue: 0,0:10:16.20,0:10:16.96,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:10:18.00,0:10:19.20,Default,,0,0,0,,nàng chờ ta thêm một lát.
Dialogue: 0,0:10:34.67,0:10:35.67,Default,,0,0,0,,Ngươi nói sai rồi.
Dialogue: 0,0:10:44.32,0:10:47.24,Default,,0,0,0,,Mẫu thân của ta xinh đẹp thiện lương,
Dialogue: 0,0:10:48.08,0:10:50.03,Default,,0,0,0,,nhưng bà ấy lại\Nbất hạnh bị ngươi chọn trúng,
Dialogue: 0,0:10:50.63,0:10:51.72,Default,,0,0,0,,sinh ra ma thai.
Dialogue: 0,0:10:52.44,0:10:53.87,Default,,0,0,0,,Nhưng bà ấy yêu ta vô điều kiện,
Dialogue: 0,0:10:54.51,0:10:56.48,Default,,0,0,0,,thậm chí còn hơn cả tính mạng của bà.
Dialogue: 0,0:11:00.87,0:11:01.87,Default,,0,0,0,,Phụ thân ta
Dialogue: 0,0:11:02.27,0:11:03.75,Default,,0,0,0,,đã trao cho ta máu thịt,
Dialogue: 0,0:11:04.20,0:11:06.75,Default,,0,0,0,,dù ông ấy từng hà khắc với ta
Dialogue: 0,0:11:06.75,0:11:08.12,Default,,0,0,0,,vì cái chết của mẫu thân,
Dialogue: 0,0:11:08.63,0:11:09.96,Default,,0,0,0,,nhưng ta vẫn tin rằng,
Dialogue: 0,0:11:10.39,0:11:12.12,Default,,0,0,0,,khi ta còn trong bụng mẹ,
Dialogue: 0,0:11:13.55,0:11:16.72,Default,,0,0,0,,chắc chắn ông ấy cũng từng\Nthật lòng mong chờ ta chào đời.
Dialogue: 0,0:11:18.51,0:11:19.67,Default,,0,0,0,,Suốt cả đời,
Dialogue: 0,0:11:20.72,0:11:23.00,Default,,0,0,0,,ông ấy luôn yêu mẫu thân ta sâu đậm.
Dialogue: 0,0:11:24.75,0:11:26.36,Default,,0,0,0,,Kinh Lan An và Oánh Tâm
Dialogue: 0,0:11:27.63,0:11:29.39,Default,,0,0,0,,đã dốc hết sức mình bảo vệ ta
Dialogue: 0,0:11:30.15,0:11:32.12,Default,,0,0,0,,trong tình cảnh khốn khó nhất,
Dialogue: 0,0:11:33.67,0:11:34.96,Default,,0,0,0,,chăm sóc cho ta trưởng thành.
Dialogue: 0,0:11:37.55,0:11:38.39,Default,,0,0,0,,Tiêu Lẫm
Dialogue: 0,0:11:39.03,0:11:41.08,Default,,0,0,0,,là kẻ địch với ta trong chuyện nước nhà,
Dialogue: 0,0:11:42.08,0:11:43.39,Default,,0,0,0,,nhưng với tư cách là bạn,
Dialogue: 0,0:11:44.03,0:11:45.39,Default,,0,0,0,,hắn chưa từng phụ ta,
Dialogue: 0,0:11:48.60,0:11:50.84,Default,,0,0,0,,vẫn luôn là ta phụ hắn.
Dialogue: 0,0:11:55.39,0:11:56.44,Default,,0,0,0,,Ân sư của ta,
Dialogue: 0,0:11:57.84,0:11:59.00,Default,,0,0,0,,Triệu Du chân nhân,
Dialogue: 0,0:11:59.60,0:12:01.00,Default,,0,0,0,,ông ấy đã cứu ta khỏi Nhược Thủy,
Dialogue: 0,0:12:01.63,0:12:03.32,Default,,0,0,0,,biết rõ ta xuất thân chẳng tốt lành,
Dialogue: 0,0:12:04.36,0:12:06.72,Default,,0,0,0,,nhưng vẫn ngày đêm dạy dỗ ta,
Dialogue: 0,0:12:07.72,0:12:09.12,Default,,0,0,0,,chẳng khác nào ơn tái tạo.
Dialogue: 0,0:12:23.84,0:12:25.32,Default,,0,0,0,,Càng khỏi nói tới Tô Tô.
Dialogue: 0,0:12:33.44,0:12:35.63,Default,,0,0,0,,Là nàng ấy liều mạng nắm lấy tay ta,
Dialogue: 0,0:12:35.84,0:12:38.51,Default,,0,0,0,,muốn kéo ta ra khỏi địa ngục.
Dialogue: 0,0:12:39.15,0:12:41.84,Default,,0,0,0,,Là nàng ấy đã giúp ta học được cách yêu,
Dialogue: 0,0:12:42.60,0:12:44.60,Default,,0,0,0,,học được cảm nhận mọi thứ.
Dialogue: 0,0:12:49.91,0:12:50.79,Default,,0,0,0,,Là nàng ấy
Dialogue: 0,0:12:51.48,0:12:53.63,Default,,0,0,0,,phá tan bóng tối, để ta nhìn thấy ánh sáng
Dialogue: 0,0:12:54.39,0:12:55.79,Default,,0,0,0,,hết lần này tới lần khác.
Dialogue: 0,0:13:05.20,0:13:05.91,Default,,0,0,0,,Ngươi xem đi.
Dialogue: 0,0:13:06.63,0:13:08.51,Default,,0,0,0,,Tuy những yêu thương ta nhận được\Nkhông nhiều lắm,
Dialogue: 0,0:13:09.32,0:13:10.84,Default,,0,0,0,,nhưng không phải là hoàn toàn không có.
Dialogue: 0,0:13:12.63,0:13:13.96,Default,,0,0,0,,Tự xót thân mình,
Dialogue: 0,0:13:14.67,0:13:15.96,Default,,0,0,0,,tự oán than hối hận.
Dialogue: 0,0:13:16.96,0:13:18.75,Default,,0,0,0,,Kẻ muốn hủy diệt hết thảy
Dialogue: 0,0:13:19.20,0:13:20.24,Default,,0,0,0,,chỉ có ngươi thôi.
Dialogue: 0,0:13:27.36,0:13:28.27,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:13:32.72,0:13:34.08,Default,,0,0,0,,ngươi nực cười quá đấy.
Dialogue: 0,0:13:34.72,0:13:36.60,Default,,0,0,0,,Ngươi vốn đã bước lên đỉnh cao,
Dialogue: 0,0:13:36.75,0:13:39.27,Default,,0,0,0,,nhưng lại lưu luyến cỏ rác trong bụi trần.
Dialogue: 0,0:13:43.08,0:13:43.79,Default,,0,0,0,,Ngươi đã
Dialogue: 0,0:13:44.67,0:13:46.79,Default,,0,0,0,,không muốn trở thành Ma Thần đến vậy,
Dialogue: 0,0:13:49.55,0:13:50.24,Default,,0,0,0,,vậy thì…
Dialogue: 0,0:13:58.12,0:14:00.44,Default,,0,0,0,,Ta chỉ đành tự ra tay thôi.
Dialogue: 0,0:15:08.67,0:15:09.84,Default,,0,0,0,,Ngươi chính là ta.
Dialogue: 0,0:15:10.20,0:15:12.15,Default,,0,0,0,,Đây là chốn về duy nhất của ngươi.
Dialogue: 0,0:15:24.72,0:15:26.39,Default,,0,0,0,,Có phải Ma Thần lại mạnh hơn rồi không?
Dialogue: 0,0:15:27.63,0:15:28.96,Default,,0,0,0,,Đúng… đúng nhỉ?
Dialogue: 0,0:15:30.12,0:15:31.12,Default,,0,0,0,,Sức ép này…
Dialogue: 0,0:15:31.55,0:15:33.36,Default,,0,0,0,,ta sắp không thở nổi nữa rồi.
Dialogue: 0,0:15:35.63,0:15:38.51,Default,,0,0,0,,[Xem ra hắn sắp thành Ma Thần rồi.]
Dialogue: 0,0:15:57.90,0:16:02.62,Default,,0,0,0,,♪Sự ồn ào của ánh lửa♪
Dialogue: 0,0:16:03.26,0:16:08.94,Default,,0,0,0,,♪Đến từ nhịp tim nơi vực sâu♪
Dialogue: 0,0:16:08.94,0:16:14.70,Default,,0,0,0,,♪Phá tan đau khổ trong màn đêm đằng đẵng♪
Dialogue: 0,0:16:14.70,0:16:20.46,Default,,0,0,0,,♪Bổ đôi bóng tối, hứng lấy bình minh♪
Dialogue: 0,0:16:20.74,0:16:25.91,Default,,0,0,0,,♪Đi ngược vầng sáng của mọi vì sao♪
Dialogue: 0,0:16:25.91,0:16:26.84,Default,,0,0,0,,[Sao lại như vậy?]
Dialogue: 0,0:16:26.84,0:16:32.22,Default,,0,0,0,,♪Thiêu cháy hết thảy để phá tan cản trở♪
Dialogue: 0,0:16:32.34,0:16:38.42,Default,,0,0,0,,♪Xé mở vết thương trời cao,\Ntrường ca ác chiến huyền hoàng♪
Dialogue: 0,0:16:38.55,0:16:39.36,Default,,0,0,0,,Bây giờ,
Dialogue: 0,0:16:41.27,0:16:42.51,Default,,0,0,0,,đến lượt ta rồi.
Dialogue: 0,0:16:45.18,0:16:49.27,Default,,0,0,0,,♪Lấy thân thể ta chắn cho vạn người♪
Dialogue: 0,0:16:49.27,0:16:50.12,Default,,0,0,0,,Không thể nào.
Dialogue: 0,0:16:50.72,0:16:51.87,Default,,0,0,0,,Chúng là trái tim,
Dialogue: 0,0:16:51.87,0:16:53.67,Default,,0,0,0,,xương cốt và mắt của ta,
Dialogue: 0,0:16:54.36,0:16:56.12,Default,,0,0,0,,sao chúng lại không nghe ta gọi?
Dialogue: 0,0:16:56.86,0:16:59.66,Default,,0,0,0,,♪Dù chỉ có một tia hy vọng♪
Dialogue: 0,0:16:59.66,0:17:03.14,Default,,0,0,0,,♪Dù chỉ có một tia sáng♪
Dialogue: 0,0:17:03.14,0:17:09.78,Default,,0,0,0,,♪Cháy rụi cả đom đóm nhỏ bé♪
Dialogue: 0,0:17:11.44,0:17:13.55,Default,,0,0,0,,Ta đã trải qua ba kiếp người, thần, ma,
Dialogue: 0,0:17:13.88,0:17:14.64,Default,,0,0,0,,còn ngươi,
Dialogue: 0,0:17:15.20,0:17:18.00,Default,,0,0,0,,chỉ giậm chân tại chỗ\Ntrong nghiệp chướng của quá khứ.
Dialogue: 0,0:17:19.44,0:17:20.59,Default,,0,0,0,,Thế gian này
Dialogue: 0,0:17:20.83,0:17:22.92,Default,,0,0,0,,mãi mãi chỉ có một Ma Thần.
Dialogue: 0,0:17:27.11,0:17:28.00,Default,,0,0,0,,Bây giờ,
Dialogue: 0,0:17:35.20,0:17:36.75,Default,,0,0,0,,ta mới là Ma Thần.
Dialogue: 0,0:17:42.96,0:17:44.16,Default,,0,0,0,,[Đàm Đài Tẫn,]
Dialogue: 0,0:17:46.31,0:17:47.59,Default,,0,0,0,,[ngươi biến thành ta,]
Dialogue: 0,0:17:48.59,0:17:49.83,Default,,0,0,0,,[ta biến thành ngươi.]
Dialogue: 0,0:17:52.16,0:17:54.16,Default,,0,0,0,,[Kết quả đều như nhau thôi.]
Dialogue: 0,0:17:57.31,0:17:59.64,Default,,0,0,0,,[Ngươi là Ma Thần duy nhất.]
Dialogue: 0,0:18:50.59,0:18:53.16,Default,,0,0,0,,[Chỉ có vị thần thật sự mới có thể\Ntiêu diệt Ma Thần,]
Dialogue: 0,0:18:54.03,0:18:55.03,Default,,0,0,0,,[mà vị thần thật sự…]
Dialogue: 0,0:18:55.03,0:18:57.72,Default,,0,0,0,,[Thê tử kết tóc của ta\Nlà thượng thần Sơ Hoàng,]
Dialogue: 0,0:18:58.03,0:18:59.72,Default,,0,0,0,,[vị thần linh cuối cùng\Ncủa tộc Phượng Hoàng.]
Dialogue: 0,0:19:00.48,0:19:02.92,Default,,0,0,0,,[Tộc Phượng Hoàng trời sinh thích hợp\Ntu đạo Vô Tình.]
Dialogue: 0,0:19:03.51,0:19:05.11,Default,,0,0,0,,[Đó là con đường tắt để trở thành thần.]
Dialogue: 0,0:19:05.83,0:19:06.59,Default,,0,0,0,,[Tô Tô,]
Dialogue: 0,0:19:07.27,0:19:08.20,Default,,0,0,0,,[đạo Vô Tình.]
Dialogue: 0,0:19:14.11,0:19:15.27,Default,,0,0,0,,Hóa ra là vậy.
Dialogue: 0,0:19:16.03,0:19:16.72,Default,,0,0,0,,Thì ra,
Dialogue: 0,0:19:18.68,0:19:20.55,Default,,0,0,0,,đây mới là lối thoát duy nhất.
Dialogue: 0,0:19:53.11,0:19:54.20,Default,,0,0,0,,Công bố với tứ châu,
Dialogue: 0,0:19:54.59,0:19:55.55,Default,,0,0,0,,ba ngày sau,
Dialogue: 0,0:19:56.88,0:19:57.68,Default,,0,0,0,,ta sẽ lấy Dục Linh tiên tử
Dialogue: 0,0:19:57.68,0:19:59.92,Default,,0,0,0,,trong sáng thuần khiết\Nnhất núi Trường Trạch
Dialogue: 0,0:19:59.92,0:20:01.51,Default,,0,0,0,,làm thê tử.
Dialogue: 0,0:20:05.51,0:20:07.00,Default,,0,0,0,,Nói với các phái Tiên Môn,
Dialogue: 0,0:20:07.88,0:20:09.68,Default,,0,0,0,,nếu họ muốn tới chúc mừng
Dialogue: 0,0:20:10.64,0:20:12.44,Default,,0,0,0,,thì ta sẽ mở cổng Ma Vực
Dialogue: 0,0:20:13.07,0:20:14.68,Default,,0,0,0,,để họ vào đây.
Dialogue: 0,0:20:19.03,0:20:22.72,Default,,0,0,0,,Chúc mừng Ma Thần!
Dialogue: 0,0:20:23.31,0:20:26.83,Default,,0,0,0,,Chúc mừng Ma Thần!
Dialogue: 0,0:20:27.48,0:20:31.00,Default,,0,0,0,,Chúc mừng Ma Thần!
Dialogue: 0,0:20:31.59,0:20:35.00,Default,,0,0,0,,Chúc mừng Ma Thần!
Dialogue: 0,0:20:35.35,0:20:38.75,Default,,0,0,0,,Chúc mừng Ma Thần!
Dialogue: 0,0:20:43.22,0:20:46.54,Default,,0,0,0,,[Tân lang: Thương Cửu Mân,\Ntân nương: Lê Tô Tô]
Dialogue: 0,0:20:48.07,0:20:49.59,Default,,0,0,0,,Ma Thần ép cưới tiểu sư muội
Dialogue: 0,0:20:49.72,0:20:51.48,Default,,0,0,0,,rõ ràng là đang sỉ nhục\NHành Dương Tông chúng ta,
Dialogue: 0,0:20:51.48,0:20:52.51,Default,,0,0,0,,sỉ nhục Tiên Môn.
Dialogue: 0,0:20:52.51,0:20:55.07,Default,,0,0,0,,Nhưng lần này cánh cổng Ma Vực rộng mở,
Dialogue: 0,0:20:55.31,0:20:57.35,Default,,0,0,0,,chúng ta vừa hay có thể lợi dụng\Nsự ngông cuồng của Ma Thần
Dialogue: 0,0:20:57.55,0:20:59.40,Default,,0,0,0,,để liên hợp sức mạnh\Ncác môn phái giết chết hắn.
Dialogue: 0,0:21:01.24,0:21:01.75,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:21:02.16,0:21:03.88,Default,,0,0,0,,Chúng ta không thể trơ mắt\Nnhìn Dục Linh tiên tử
Dialogue: 0,0:21:04.16,0:21:05.24,Default,,0,0,0,,bị sỉ nhục vậy được.
Dialogue: 0,0:21:05.92,0:21:06.79,Default,,0,0,0,,Công Dã chưởng môn,
Dialogue: 0,0:21:06.96,0:21:08.40,Default,,0,0,0,,Tiêu Dao Tông chúng ta\Nsẽ dốc hết sức ủng hộ huynh
Dialogue: 0,0:21:08.40,0:21:09.48,Default,,0,0,0,,thống nhất các phái trong Tiên Môn.
Dialogue: 0,0:21:09.59,0:21:10.68,Default,,0,0,0,,Đúng vậy, chưởng môn sư huynh.
Dialogue: 0,0:21:10.68,0:21:12.07,Default,,0,0,0,,Trưởng lão Tiên Môn đều đã bị giết hại,
Dialogue: 0,0:21:12.35,0:21:14.20,Default,,0,0,0,,chỉ có sư huynh\Ncó thể thống nhất Tiên Môn lần nữa.
Dialogue: 0,0:21:14.48,0:21:16.72,Default,,0,0,0,,Chúng ta không còn thời gian\Ndo dự tiếp nữa.
Dialogue: 0,0:21:17.48,0:21:18.20,Default,,0,0,0,,Nếu bỏ qua
Dialogue: 0,0:21:18.20,0:21:19.88,Default,,0,0,0,,cơ hội vào Hoang Uyên diệt ma lần này,
Dialogue: 0,0:21:19.94,0:21:20.83,Default,,0,0,0,,[Trừng Tâm Thanh Thần]
Dialogue: 0,0:21:20.83,0:21:22.64,Default,,0,0,0,,thì sau này càng không có\Nkhả năng cứu vãn.
Dialogue: 0,0:21:31.75,0:21:34.03,Default,,0,0,0,,[Chỉ còn ba ngày nữa\Nlà tới ngày Đàm Đài Tẫn]
Dialogue: 0,0:21:35.00,0:21:36.31,Default,,0,0,0,,[ép cưới tiểu sư muội,]
Dialogue: 0,0:21:36.64,0:21:38.03,Default,,0,0,0,,[với sức mạnh bây giờ của ta]
Dialogue: 0,0:21:38.55,0:21:40.07,Default,,0,0,0,,[thì hoàn toàn\Nkhông phải đối thủ của hắn.]
Dialogue: 0,0:21:57.83,0:21:59.68,Default,,0,0,0,,Sư phụ, đây chính là vực Phong Yêu ạ?
Dialogue: 0,0:22:01.75,0:22:03.11,Default,,0,0,0,,Từ khi Hành Dương Tông lập môn phái,
Dialogue: 0,0:22:03.11,0:22:05.03,Default,,0,0,0,,các sư tổ đã bày trận pháp ở đây
Dialogue: 0,0:22:05.35,0:22:07.72,Default,,0,0,0,,để phỏng theo Hoang Uyên,\Nphong ấn, luyện hóa yêu vật.
Dialogue: 0,0:22:16.96,0:22:17.72,Default,,0,0,0,,Sư phụ,
Dialogue: 0,0:22:18.16,0:22:19.83,Default,,0,0,0,,nếu để gậy ông đập lưng ông,
Dialogue: 0,0:22:20.11,0:22:21.51,Default,,0,0,0,,dùng sức mạnh này chống lại tà ác
Dialogue: 0,0:22:22.07,0:22:23.16,Default,,0,0,0,,thì có được không ạ?
Dialogue: 0,0:22:24.44,0:22:25.92,Default,,0,0,0,,Sức mạnh yêu ma phá hủy tâm trí con người,
Dialogue: 0,0:22:25.92,0:22:26.96,Default,,0,0,0,,tuyệt đối không thể dính dáng vào,
Dialogue: 0,0:22:27.27,0:22:29.72,Default,,0,0,0,,dù ý định ban đầu là dùng\Nsức mạnh này chống lại tà ác,
Dialogue: 0,0:22:30.40,0:22:31.79,Default,,0,0,0,,thì sau khi tẩu hỏa nhập ma
Dialogue: 0,0:22:31.88,0:22:33.20,Default,,0,0,0,,cũng sẽ không phân biệt địch ta.
Dialogue: 0,0:22:33.55,0:22:34.55,Default,,0,0,0,,Như vậy
Dialogue: 0,0:22:34.72,0:22:36.24,Default,,0,0,0,,thì sẽ bị ma khí mê hoặc,
Dialogue: 0,0:22:36.35,0:22:37.79,Default,,0,0,0,,trở thành con rối của yêu ma.
Dialogue: 0,0:22:39.72,0:22:41.07,Default,,0,0,0,,[Không lo được nhiều vậy nữa rồi.]
Dialogue: 0,0:22:42.07,0:22:42.88,Default,,0,0,0,,[Đàm Đài Tẫn,]
Dialogue: 0,0:22:43.83,0:22:45.55,Default,,0,0,0,,[ta không đội trời chung với ngươi,]
Dialogue: 0,0:22:46.72,0:22:49.31,Default,,0,0,0,,[dù có chết cũng phải\Nkéo ngươi theo cùng.]
Dialogue: 0,0:24:26.27,0:24:28.55,Default,,0,0,0,,Tô Tô, chờ nàng tỉnh lại
Dialogue: 0,0:24:29.07,0:24:30.83,Default,,0,0,0,,thì ắt nàng sẽ hận ta thấu xương.
Dialogue: 0,0:24:34.79,0:24:36.03,Default,,0,0,0,,Ta từng hứa với nàng,
Dialogue: 0,0:24:36.51,0:24:38.40,Default,,0,0,0,,rằng sẽ không để\Ncơn ác mộng của nàng tái hiện,
Dialogue: 0,0:24:39.64,0:24:40.51,Default,,0,0,0,,nhưng giờ đây
Dialogue: 0,0:24:42.35,0:24:44.00,Default,,0,0,0,,ta không thể không làm vậy.
Dialogue: 0,0:24:55.96,0:24:57.75,Default,,0,0,0,,Hôn lễ 500 năm trước,
Dialogue: 0,0:24:58.88,0:25:01.96,Default,,0,0,0,,nàng đã tự tay\Ncắm đinh Diệt Hồn vào tim ta.
Dialogue: 0,0:25:04.83,0:25:05.79,Default,,0,0,0,,Lần này,
Dialogue: 0,0:25:06.75,0:25:09.51,Default,,0,0,0,,ta mong nàng\Ncó thể kiên định được như lúc ấy.
Dialogue: 0,0:25:18.79,0:25:19.51,Default,,0,0,0,,[Chấp Bạch Vũ,]
Dialogue: 0,0:25:20.24,0:25:23.16,Default,,0,0,0,,[ta từng hứa với ngươi\Nlà sẽ cứu lấy tộc Di Nguyệt,]
Dialogue: 0,0:25:26.07,0:25:26.96,Default,,0,0,0,,[giờ đây,]
Dialogue: 0,0:25:27.88,0:25:29.83,Default,,0,0,0,,[cuối cùng ta có thể hoàn thành lời hứa]
Dialogue: 0,0:25:30.51,0:25:32.31,Default,,0,0,0,,[với ngươi, với người trong tộc rồi.]
Dialogue: 0,0:25:43.31,0:25:44.79,Default,,0,0,0,,[Là chủ của Di Nguyệt,]
Dialogue: 0,0:25:45.31,0:25:46.35,Default,,0,0,0,,[đây là việc duy nhất,]
Dialogue: 0,0:25:46.88,0:25:49.31,Default,,0,0,0,,[cũng là việc cuối cùng\Nta có thể làm vì các ngươi.]
Dialogue: 0,0:26:06.75,0:26:07.31,Default,,0,0,0,,Chủ thượng.
Dialogue: 0,0:26:23.40,0:26:24.83,Default,,0,0,0,,[Xem tình hình bên ngoài kết giới]
Dialogue: 0,0:26:25.40,0:26:26.68,Default,,0,0,0,,[thì khí đục lại đậm hơn rồi.]
Dialogue: 0,0:26:31.59,0:26:32.27,Default,,0,0,0,,[Đây là…]
Dialogue: 0,0:26:33.03,0:26:34.00,Default,,0,0,0,,[Quạ gửi thư của chủ thượng.]
Dialogue: 0,0:26:41.75,0:26:42.31,Default,,0,0,0,,Ra đây đi.
Dialogue: 0,0:26:44.44,0:26:45.92,Default,,0,0,0,,Nay Ma Thần đã hiện thế,
Dialogue: 0,0:26:46.24,0:26:47.55,Default,,0,0,0,,rốt cuộc ngươi có cách gì
Dialogue: 0,0:26:47.55,0:26:48.79,Default,,0,0,0,,có thể giúp ta giết Ma Thần không?
Dialogue: 0,0:26:57.24,0:26:58.31,Default,,0,0,0,,Có người nhờ ta đưa cho ngươi
Dialogue: 0,0:26:58.96,0:27:00.24,Default,,0,0,0,,trận pháp Tinh Phạt này.
Dialogue: 0,0:27:03.44,0:27:04.68,Default,,0,0,0,,[Trận pháp Tinh Phạt.]
Dialogue: 0,0:27:08.55,0:27:10.96,Default,,0,0,0,,[Tất cả đều đã sắp xếp ổn thỏa rồi.]
Dialogue: 0,0:27:58.79,0:28:00.44,Default,,0,0,0,,Đừng giãy giụa nữa.
Dialogue: 0,0:28:02.07,0:28:03.07,Default,,0,0,0,,Ngươi đang ở đâu?
Dialogue: 0,0:28:05.03,0:28:06.40,Default,,0,0,0,,Ta đã là Ma Thần,
Dialogue: 0,0:28:07.31,0:28:09.07,Default,,0,0,0,,dĩ nhiên là ở mọi nơi rồi.
Dialogue: 0,0:28:14.51,0:28:16.31,Default,,0,0,0,,Chúc mừng nàng, Lê Tô Tô.
Dialogue: 0,0:28:16.59,0:28:19.68,Default,,0,0,0,,Ngày mai\Nnàng sẽ ngồi trên chiếc Long Xa này,
Dialogue: 0,0:28:20.24,0:28:22.24,Default,,0,0,0,,trở thành thê tử của Ma Thần.
Dialogue: 0,0:28:22.79,0:28:24.24,Default,,0,0,0,,Thê tử của Ma Thần ư?
Dialogue: 0,0:28:24.40,0:28:25.20,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:28:25.88,0:28:26.96,Default,,0,0,0,,Năm trăm năm trước,
Dialogue: 0,0:28:29.00,0:28:31.27,Default,,0,0,0,,chúng ta đã thành thân hai lần rồi.
Dialogue: 0,0:28:32.31,0:28:35.59,Default,,0,0,0,,Trong Bát Nhã Phù Sinh,\NMinh Dạ cũng từng cưới Tang Tửu.
Dialogue: 0,0:28:36.44,0:28:37.79,Default,,0,0,0,,Nhưng lần này thì khác.
Dialogue: 0,0:28:38.96,0:28:42.75,Default,,0,0,0,,Lần này, người lấy nàng\Nlà Ma Thần thực sự.
Dialogue: 0,0:28:43.48,0:28:46.00,Default,,0,0,0,,Thành thân với tên yêu ma\Nthất tín bội nghĩa như ngươi
Dialogue: 0,0:28:46.24,0:28:48.16,Default,,0,0,0,,là nỗi sỉ nhục đời đời kiếp kiếp của ta.
Dialogue: 0,0:28:48.40,0:28:50.00,Default,,0,0,0,,Ta thà chết ngay bây giờ.
Dialogue: 0,0:29:06.96,0:29:08.31,Default,,0,0,0,,Ta đã là Ma Thần,
Dialogue: 0,0:29:09.24,0:29:10.20,Default,,0,0,0,,Lê Tô Tô,
Dialogue: 0,0:29:10.64,0:29:12.35,Default,,0,0,0,,chỉ cần nguyên thần của nàng\Nchưa bị hủy diệt,
Dialogue: 0,0:29:13.16,0:29:15.64,Default,,0,0,0,,ta sẽ luôn quấn lấy nàng.
Dialogue: 0,0:29:16.75,0:29:17.59,Default,,0,0,0,,Lê Tô Tô,
Dialogue: 0,0:29:18.03,0:29:20.03,Default,,0,0,0,,ta khuyên nàng hãy giữ sức đi.
Dialogue: 0,0:29:20.92,0:29:21.72,Default,,0,0,0,,Thôi.
Dialogue: 0,0:29:22.92,0:29:24.07,Default,,0,0,0,,Sắp sửa đại hôn rồi,
Dialogue: 0,0:29:24.51,0:29:25.79,Default,,0,0,0,,từ nay về sau,
Dialogue: 0,0:29:26.68,0:29:28.75,Default,,0,0,0,,nàng sẽ không còn tự do của nàng nữa.
Dialogue: 0,0:29:30.31,0:29:31.48,Default,,0,0,0,,Trước lúc đó,
Dialogue: 0,0:29:32.00,0:29:34.24,Default,,0,0,0,,nàng còn nơi nào muốn đi nữa không?
Dialogue: 0,0:29:36.83,0:29:38.07,Default,,0,0,0,,Để ta nghĩ xem nào.
Dialogue: 0,0:29:51.68,0:29:52.88,Default,,0,0,0,,Có phải nơi này không?
Dialogue: 0,0:30:04.16,0:30:05.68,Default,,0,0,0,,Vì sao ngươi dẫn ta tới sông Mặc?
Dialogue: 0,0:30:06.03,0:30:06.79,Default,,0,0,0,,Không có gì.
Dialogue: 0,0:30:07.11,0:30:08.35,Default,,0,0,0,,Tự dưng nghĩ tới
Dialogue: 0,0:30:09.16,0:30:10.31,Default,,0,0,0,,nên tới đây thôi.
Dialogue: 0,0:30:19.59,0:30:20.75,Default,,0,0,0,,Ngồi với ta một lúc đi.
Dialogue: 0,0:30:25.27,0:30:28.00,Default,,0,0,0,,Nàng còn nhớ Tang Tửu và Minh Dạ không?
Dialogue: 0,0:30:29.79,0:30:31.72,Default,,0,0,0,,Những ngày qua ta thường nghĩ,
Dialogue: 0,0:30:32.51,0:30:34.64,Default,,0,0,0,,đại chiến Thần Ma vô cùng lớn,
Dialogue: 0,0:30:35.11,0:30:36.20,Default,,0,0,0,,so ra,
Dialogue: 0,0:30:36.64,0:30:39.00,Default,,0,0,0,,chuyện hai người họ từng yêu thương nhau
Dialogue: 0,0:30:39.51,0:30:40.83,Default,,0,0,0,,vô cùng nhỏ bé.
Dialogue: 0,0:30:42.83,0:30:44.55,Default,,0,0,0,,Nếu không có Bát Nhã Phù Sinh,
Dialogue: 0,0:30:45.75,0:30:47.59,Default,,0,0,0,,e là đời sau không ai còn nhớ
Dialogue: 0,0:30:47.59,0:30:49.40,Default,,0,0,0,,đoạn ký ức bị lãng quên này.
Dialogue: 0,0:30:54.48,0:30:56.64,Default,,0,0,0,,Tình cảm đau đớn cùng cực đó
Dialogue: 0,0:30:57.48,0:31:00.55,Default,,0,0,0,,dễ dàng bị chôn vùi\Ntrong năm tháng như vậy.
Dialogue: 0,0:31:03.24,0:31:04.03,Default,,0,0,0,,Có thể thấy,
Dialogue: 0,0:31:05.35,0:31:06.72,Default,,0,0,0,,chữ "Tình"
Dialogue: 0,0:31:07.55,0:31:08.92,Default,,0,0,0,,thật mỏng manh,
Dialogue: 0,0:31:09.51,0:31:11.07,Default,,0,0,0,,thật nực cười.
Dialogue: 0,0:31:15.20,0:31:16.00,Default,,0,0,0,,Thế nhưng,
Dialogue: 0,0:31:17.44,0:31:18.96,Default,,0,0,0,,ta khác Minh Dạ.
Dialogue: 0,0:31:19.72,0:31:21.40,Default,,0,0,0,,Ta sắp bước lên đỉnh cao.
Dialogue: 0,0:31:22.51,0:31:23.55,Default,,0,0,0,,Nàng buộc phải
Dialogue: 0,0:31:25.11,0:31:26.72,Default,,0,0,0,,ở bên cạnh ta.
Dialogue: 0,0:31:30.35,0:31:32.48,Default,,0,0,0,,Đừng tự dát vàng lên mặt nữa.
Dialogue: 0,0:31:33.20,0:31:36.44,Default,,0,0,0,,Minh Dạ đường đường là chiến thần\Nthần vực Thượng Thanh.
Dialogue: 0,0:31:36.92,0:31:38.51,Default,,0,0,0,,Tuy ngài ấy từng phụ lòng Tang Tửu,
Dialogue: 0,0:31:38.83,0:31:40.64,Default,,0,0,0,,nhưng ngài ấy tiêu diệt\Nđược Ma Thần thượng cổ.
Dialogue: 0,0:31:41.48,0:31:42.83,Default,,0,0,0,,Ngài ấy không hổ thẹn với trời đất,
Dialogue: 0,0:31:43.16,0:31:44.68,Default,,0,0,0,,cũng không hổ thẹn với muôn dân.
Dialogue: 0,0:31:46.03,0:31:47.20,Default,,0,0,0,,So với ngài ấy,
Dialogue: 0,0:31:47.64,0:31:49.11,Default,,0,0,0,,ngươi lam tham vô độ,
Dialogue: 0,0:31:49.72,0:31:51.59,Default,,0,0,0,,coi mạng người như giun dế.
Dialogue: 0,0:31:54.96,0:31:56.03,Default,,0,0,0,,Người như ngươi
Dialogue: 0,0:31:56.88,0:31:59.31,Default,,0,0,0,,hoàn toàn không xứng\Nđể đánh giá tình cảm của họ.
Dialogue: 0,0:32:12.24,0:32:12.92,Default,,0,0,0,,Thôi.
Dialogue: 0,0:32:13.55,0:32:14.48,Default,,0,0,0,,Chuyện tới nước này,
Dialogue: 0,0:32:15.35,0:32:17.11,Default,,0,0,0,,ta dẫn nàng đi xem một thứ nữa.
Dialogue: 0,0:32:33.20,0:32:34.27,Default,,0,0,0,,Trong đó là…
Dialogue: 0,0:32:35.88,0:32:37.27,Default,,0,0,0,,Diệp Phủ ở Thịnh Đô?
Dialogue: 0,0:32:37.68,0:32:38.31,Default,,0,0,0,,Đúng.
Dialogue: 0,0:32:39.07,0:32:40.11,Default,,0,0,0,,Năm trăm năm rồi,
Dialogue: 0,0:32:41.00,0:32:42.88,Default,,0,0,0,,bây giờ nơi này ở Thịnh Đô
Dialogue: 0,0:32:42.88,0:32:44.96,Default,,0,0,0,,đã không còn phủ đệ thế này nữa.
Dialogue: 0,0:32:45.88,0:32:48.96,Default,,0,0,0,,Nàng có thể coi nó là\NBát Nhã Phù Sinh của ta.
Dialogue: 0,0:32:49.48,0:32:51.59,Default,,0,0,0,,Là kết giới ta tạo ra,
Dialogue: 0,0:32:52.51,0:32:54.72,Default,,0,0,0,,là một nơi không tồn tại.
Dialogue: 0,0:32:56.27,0:32:57.11,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:32:57.68,0:32:59.51,Default,,0,0,0,,nếu ngươi không còn chút lưu luyến nào,
Dialogue: 0,0:32:59.51,0:33:01.51,Default,,0,0,0,,hạ quyết tâm muốn làm Ma Thần,
Dialogue: 0,0:33:02.16,0:33:02.83,Default,,0,0,0,,vì sao ngươi còn phải…
Dialogue: 0,0:33:02.83,0:33:04.59,Default,,0,0,0,,Ta chỉ cảm thấy thú vị mà thôi.
Dialogue: 0,0:33:08.51,0:33:09.31,Default,,0,0,0,,Nàng xem,
Dialogue: 0,0:33:10.44,0:33:12.44,Default,,0,0,0,,nước sông Mặc chảy không ngừng,
Dialogue: 0,0:33:13.20,0:33:14.75,Default,,0,0,0,,như thể vẫn luôn thay đổi
Dialogue: 0,0:33:15.16,0:33:16.92,Default,,0,0,0,,nhưng cũng như chưa từng thay đổi.
Dialogue: 0,0:33:17.68,0:33:18.51,Default,,0,0,0,,Ta đang nghĩ,
Dialogue: 0,0:33:19.20,0:33:20.59,Default,,0,0,0,,khi tình yêu biến mất,
Dialogue: 0,0:33:21.27,0:33:22.59,Default,,0,0,0,,nỗi hận biến mất,
Dialogue: 0,0:33:23.31,0:33:25.48,Default,,0,0,0,,thân xác biến mất,
Dialogue: 0,0:33:26.00,0:33:28.16,Default,,0,0,0,,phải làm thế nào để chứng minh\Nnhững yêu hận này
Dialogue: 0,0:33:29.11,0:33:30.83,Default,,0,0,0,,thật sự từng tồn tại?
Dialogue: 0,0:33:38.83,0:33:40.40,Default,,0,0,0,,Sau này sẽ có người khác
Dialogue: 0,0:33:41.59,0:33:44.00,Default,,0,0,0,,biết tới câu chuyện giữa chúng ta chứ?
Dialogue: 0,0:33:46.31,0:33:48.27,Default,,0,0,0,,Ngươi đã là Ma Thần vô địch thiên hạ,
Dialogue: 0,0:33:48.83,0:33:50.07,Default,,0,0,0,,sao lại sợ biến mất?
Dialogue: 0,0:33:50.51,0:33:51.59,Default,,0,0,0,,Đương nhiên ta không sợ.
Dialogue: 0,0:33:52.96,0:33:54.24,Default,,0,0,0,,Ta chỉ tò mò.
Dialogue: 0,0:33:54.88,0:33:57.48,Default,,0,0,0,,Nếu có người trở thành\Nchúng ta trong Phù Sinh,
Dialogue: 0,0:33:58.51,0:34:00.31,Default,,0,0,0,,họ sẽ có cảm giác gì?
Dialogue: 0,0:34:02.27,0:34:03.51,Default,,0,0,0,,Với Diệp Tịch Vụ
Dialogue: 0,0:34:03.51,0:34:05.55,Default,,0,0,0,,và Đàm Đài Tẫn 500 năm trước,
Dialogue: 0,0:34:05.92,0:34:07.40,Default,,0,0,0,,Ma Thần và Lê Tô Tô
Dialogue: 0,0:34:08.15,0:34:09.84,Default,,0,0,0,,đã là người khác rồi.
Dialogue: 0,0:34:11.55,0:34:12.51,Default,,0,0,0,,Vậy à?
Dialogue: 0,0:34:14.96,0:34:16.28,Default,,0,0,0,,Dường như cũng có lý.
Dialogue: 0,0:34:21.92,0:34:22.51,Default,,0,0,0,,Lại đây,
Dialogue: 0,0:34:23.28,0:34:24.80,Default,,0,0,0,,đi xem cùng ta.
Dialogue: 0,0:34:39.63,0:34:41.88,Default,,0,0,0,,Tiểu thư, người ở đây à?
Dialogue: 0,0:34:41.88,0:34:43.03,Default,,0,0,0,,Em tìm mãi.
Dialogue: 0,0:34:44.07,0:34:44.80,Default,,0,0,0,,Xuân Đào,
Dialogue: 0,0:34:45.19,0:34:45.67,Default,,0,0,0,,ta…
Dialogue: 0,0:34:45.67,0:34:46.40,Default,,0,0,0,,Tiểu thư,
Dialogue: 0,0:34:46.44,0:34:48.88,Default,,0,0,0,,trời lạnh thế này mà người mặc mỏng thế,
Dialogue: 0,0:34:48.88,0:34:50.76,Default,,0,0,0,,nếu tổ mẫu biết được,
Dialogue: 0,0:34:50.76,0:34:52.32,Default,,0,0,0,,thì chắc chắn sẽ mắng em đấy.
Dialogue: 0,0:34:53.19,0:34:54.48,Default,,0,0,0,,- Cho người bình nước ấm cho ấm tay.\N- Nhị muội.
Dialogue: 0,0:34:55.03,0:34:55.63,Default,,0,0,0,,Nhị muội.
Dialogue: 0,0:34:57.15,0:34:59.32,Default,,0,0,0,,Đại ca, huynh đi đâu đấy?
Dialogue: 0,0:35:00.84,0:35:02.92,Default,,0,0,0,,Ta hẹn đám Thôi Thập Tam đi săn.
Dialogue: 0,0:35:03.51,0:35:04.44,Default,,0,0,0,,Nếu cha hỏi,
Dialogue: 0,0:35:04.44,0:35:05.51,Default,,0,0,0,,thì muội cứ nói ta đến trường rồi.
Dialogue: 0,0:35:06.15,0:35:08.15,Default,,0,0,0,,Thời tiết này, lông thỏ là ấm nhất.
Dialogue: 0,0:35:08.15,0:35:10.36,Default,,0,0,0,,Sau này ta làm\Nống tay da cho muội và tổ mẫu.
Dialogue: 0,0:35:10.36,0:35:11.36,Default,,0,0,0,,Ấm lắm đấy.
Dialogue: 0,0:35:11.67,0:35:13.11,Default,,0,0,0,,Huynh đi đi, cẩn thận đấy.
Dialogue: 0,0:35:13.11,0:35:13.84,Default,,0,0,0,,Biết rồi.
Dialogue: 0,0:35:21.00,0:35:21.71,Default,,0,0,0,,[Cha.]
Dialogue: 0,0:35:22.28,0:35:23.19,Default,,0,0,0,,[Thanh Vũ.]
Dialogue: 0,0:35:23.36,0:35:24.00,Default,,0,0,0,,Thương pháp tuyệt quá.
Dialogue: 0,0:35:24.63,0:35:26.92,Default,,0,0,0,,Đương nhiên, tiểu tử con còn non lắm.
Dialogue: 0,0:35:27.36,0:35:29.28,Default,,0,0,0,,Sau này con lên chiến trường\Ncũng có thể tự gánh vác thôi.
Dialogue: 0,0:35:29.28,0:35:29.92,Default,,0,0,0,,Nhị tỷ.
Dialogue: 0,0:35:30.51,0:35:31.36,Default,,0,0,0,,Bé con.
Dialogue: 0,0:35:31.36,0:35:32.00,Default,,0,0,0,,Cha.
Dialogue: 0,0:35:32.36,0:35:33.80,Default,,0,0,0,,Sao giờ con mới về?
Dialogue: 0,0:35:33.80,0:35:34.32,Default,,0,0,0,,Tổ mẫu…
Dialogue: 0,0:35:34.32,0:35:36.00,Default,,0,0,0,,Tổ mẫu đợi con lâu lắm rồi.
Dialogue: 0,0:35:36.23,0:35:37.71,Default,,0,0,0,,Mọi người khuyên thế nào cũng vô ích.
Dialogue: 0,0:35:37.71,0:35:39.15,Default,,0,0,0,,Con không về là bà ấy không chịu ăn.
Dialogue: 0,0:35:39.15,0:35:41.15,Default,,0,0,0,,Con biết chúng ta hâm nóng\Nthức ăn bao nhiêu lần không?
Dialogue: 0,0:35:41.15,0:35:42.00,Default,,0,0,0,,Con xem con kìa.
Dialogue: 0,0:35:45.51,0:35:46.48,Default,,0,0,0,,Bé con.
Dialogue: 0,0:35:46.59,0:35:47.32,Default,,0,0,0,,Bé con.
Dialogue: 0,0:35:47.32,0:35:47.96,Default,,0,0,0,,Tổ mẫu.
Dialogue: 0,0:35:49.51,0:35:50.59,Default,,0,0,0,,Con xem con đi,
Dialogue: 0,0:35:50.80,0:35:52.28,Default,,0,0,0,,không chịu ăn uống nhiều,
Dialogue: 0,0:35:52.59,0:35:54.36,Default,,0,0,0,,lại còn mặc phong phanh thế này.
Dialogue: 0,0:35:54.96,0:35:56.59,Default,,0,0,0,,Bên ngoài sắp có tuyết rồi,
Dialogue: 0,0:35:56.59,0:35:59.00,Default,,0,0,0,,còn cứ chạy lung tung suốt.
Dialogue: 0,0:36:01.36,0:36:03.55,Default,,0,0,0,,Cô gia, con cũng thật là,
Dialogue: 0,0:36:03.84,0:36:05.96,Default,,0,0,0,,con cứ chiều nó làm bừa.
Dialogue: 0,0:36:06.19,0:36:08.59,Default,,0,0,0,,Cả năm chẳng bớt được ngày nào.
Dialogue: 0,0:36:09.59,0:36:10.59,Default,,0,0,0,,Con biết rồi, tổ mẫu.
Dialogue: 0,0:36:10.80,0:36:13.48,Default,,0,0,0,,Sau này con nhất định sẽ\Nchăm sóc Tịch Vụ thật tốt.
Dialogue: 0,0:36:15.51,0:36:17.11,Default,,0,0,0,,Thế mới được chứ.
Dialogue: 0,0:36:18.11,0:36:19.92,Default,,0,0,0,,Đây là con gái bảo bối của ta đấy.
Dialogue: 0,0:36:20.36,0:36:21.96,Default,,0,0,0,,Ta thương nó từ nhỏ tới lớn,
Dialogue: 0,0:36:23.00,0:36:26.32,Default,,0,0,0,,cậu phải chăm sóc nó cho tốt đấy.
Dialogue: 0,0:36:26.59,0:36:29.00,Default,,0,0,0,,Đừng để nó chịu khổ.
Dialogue: 0,0:36:30.11,0:36:30.88,Default,,0,0,0,,Con biết rồi.
Dialogue: 0,0:36:31.15,0:36:31.88,Default,,0,0,0,,Diệp tướng quân,
Dialogue: 0,0:36:32.80,0:36:33.76,Default,,0,0,0,,con đã cưới Tịch Vụ,
Dialogue: 0,0:36:34.44,0:36:37.03,Default,,0,0,0,,sau này sẽ coi cô ấy như bảo bối,
Dialogue: 0,0:36:37.03,0:36:38.63,Default,,0,0,0,,sẽ không để cô ấy chịu ấm ức ngày nào.
Dialogue: 0,0:36:39.80,0:36:41.00,Default,,0,0,0,,Thế mới được.
Dialogue: 0,0:36:42.51,0:36:42.88,Default,,0,0,0,,Ơ, con…
Dialogue: 0,0:36:42.88,0:36:44.11,Default,,0,0,0,,Con xem con đi,
Dialogue: 0,0:36:44.19,0:36:46.23,Default,,0,0,0,,suốt ngày\Nchỉ biết tỏ vẻ dữ dằn dọa cô gia.
Dialogue: 0,0:36:46.23,0:36:47.44,Default,,0,0,0,,Không, không, con đùa thôi mà.
Dialogue: 0,0:36:47.76,0:36:48.28,Default,,0,0,0,,Con…
Dialogue: 0,0:36:49.51,0:36:50.40,Default,,0,0,0,,Nào, nào,
Dialogue: 0,0:36:50.40,0:36:52.32,Default,,0,0,0,,hai đứa con vào ăn đi.
Dialogue: 0,0:36:52.71,0:36:53.80,Default,,0,0,0,,Nào, lại đây.
Dialogue: 0,0:36:54.00,0:36:54.51,Default,,0,0,0,,Vào đi.
Dialogue: 0,0:36:54.51,0:36:55.07,Default,,0,0,0,,Đi.
Dialogue: 0,0:36:55.48,0:36:57.67,Default,,0,0,0,,Đi, ăn cơm.
Dialogue: 0,0:37:10.63,0:37:12.36,Default,,0,0,0,,Rốt cuộc ngươi muốn làm gì?
Dialogue: 0,0:37:12.92,0:37:13.96,Default,,0,0,0,,Ở Diệp Phủ này,
Dialogue: 0,0:37:14.71,0:37:15.84,Default,,0,0,0,,không có tà cốt,
Dialogue: 0,0:37:15.84,0:37:16.80,Default,,0,0,0,,không có Ma Thần.
Dialogue: 0,0:37:17.71,0:37:19.15,Default,,0,0,0,,Ta chỉ là phu quân của nàng,
Dialogue: 0,0:37:20.36,0:37:21.59,Default,,0,0,0,,nàng thấy thế nào?
Dialogue: 0,0:37:27.76,0:37:30.07,Default,,0,0,0,,Đây là Bát Nhã Phù Sinh trong lòng ngươi?
Dialogue: 0,0:37:31.96,0:37:32.76,Default,,0,0,0,,Sao thế?
Dialogue: 0,0:37:34.55,0:37:35.76,Default,,0,0,0,,Nàng không thích à?
Dialogue: 0,0:37:39.15,0:37:40.23,Default,,0,0,0,,Ngươi là Ma Thần,
Dialogue: 0,0:37:40.55,0:37:43.15,Default,,0,0,0,,sao lại quyến luyến\Nviên mãn ở thế tục chứ?
Dialogue: 0,0:37:44.03,0:37:45.19,Default,,0,0,0,,Nàng không phải ta,
Dialogue: 0,0:37:45.76,0:37:48.63,Default,,0,0,0,,sao biết được Ma Thần\Nthích Phù Sinh thế nào?
Dialogue: 0,0:37:57.40,0:37:58.88,Default,,0,0,0,,Đây là pháo chất lượng kém
Dialogue: 0,0:37:59.36,0:38:01.19,Default,,0,0,0,,vào đêm giao thừa năm đó.
Dialogue: 0,0:38:08.84,0:38:09.63,Default,,0,0,0,,Ngươi biết không?
Dialogue: 0,0:38:10.19,0:38:12.23,Default,,0,0,0,,Ta từng ước trước pháo hoa.
Dialogue: 0,0:38:12.55,0:38:14.51,Default,,0,0,0,,Mong ngươi không trở thành Ma Thần.
Dialogue: 0,0:38:15.40,0:38:18.28,Default,,0,0,0,,Nhưng bây giờ\Nta hối hận vì từng yêu ngươi.
Dialogue: 0,0:38:18.76,0:38:21.32,Default,,0,0,0,,Thậm chí hối hận vì lãng phí\Nlá bùa Kiến Sinh đó.
Dialogue: 0,0:38:21.44,0:38:22.44,Default,,0,0,0,,Bùa Kiến Sinh?
Dialogue: 0,0:38:23.32,0:38:25.19,Default,,0,0,0,,Năm mới đáng để dùng một lá.
Dialogue: 0,0:38:38.15,0:38:39.59,Default,,0,0,0,,Là tại ta quá ngây thơ.
Dialogue: 0,0:38:40.28,0:38:42.19,Default,,0,0,0,,Vậy mà lại tin rằng gỗ đá
Dialogue: 0,0:38:42.36,0:38:44.03,Default,,0,0,0,,cũng có thể có trái tim.
Dialogue: 0,0:38:48.55,0:38:50.32,Default,,0,0,0,,Chỉ là một lá bùa mà thôi.
Dialogue: 0,0:38:50.59,0:38:52.11,Default,,0,0,0,,Với sức mạnh hiện giờ của ta,
Dialogue: 0,0:38:52.28,0:38:53.96,Default,,0,0,0,,còn cảnh đẹp kỳ quan nào trên đời
Dialogue: 0,0:38:53.96,0:38:55.07,Default,,0,0,0,,mà ta không thấy được.
Dialogue: 0,0:39:07.44,0:39:08.19,Default,,0,0,0,,Diệp Tịch Vụ.
Dialogue: 0,0:39:09.28,0:39:12.03,Default,,0,0,0,,Giao thừa năm nào cô cũng vui như vậy ư?
Dialogue: 0,0:39:12.15,0:39:13.44,Default,,0,0,0,,Năm nay không giống lắm.
Dialogue: 0,0:39:13.80,0:39:14.92,Default,,0,0,0,,Nhưng cũng vẫn vui.
Dialogue: 0,0:39:15.44,0:39:17.76,Default,,0,0,0,,Ngươi yên tâm, sau này có ta ở bên ngươi,
Dialogue: 0,0:39:18.11,0:39:19.55,Default,,0,0,0,,sẽ không ai dám ức hiếp ngươi nữa.
Dialogue: 0,0:39:19.55,0:39:21.55,Default,,0,0,0,,Năm nào chúng ta cũng có thể vui thế này.
Dialogue: 0,0:39:23.00,0:39:23.76,Default,,0,0,0,,Lê Tô Tô,
Dialogue: 0,0:39:25.63,0:39:27.11,Default,,0,0,0,,rõ ràng người bị lừa dối năm đó
Dialogue: 0,0:39:27.48,0:39:28.63,Default,,0,0,0,,là ta.
Dialogue: 0,0:39:30.23,0:39:31.96,Default,,0,0,0,,Khi nàng dạy ta vẽ bùa Kiến Sinh,
Dialogue: 0,0:39:31.96,0:39:33.44,Default,,0,0,0,,trong lòng đã rất rõ ràng rồi.
Dialogue: 0,0:39:33.44,0:39:34.63,Default,,0,0,0,,Đã nói là phải làm.
Dialogue: 0,0:39:34.63,0:39:36.88,Default,,0,0,0,,Dĩ nhiên ta đến để thực hiện lời hứa rồi.
Dialogue: 0,0:39:37.96,0:39:40.07,Default,,0,0,0,,Ta dạy gì cho ngươi thì được đây?
Dialogue: 0,0:39:40.07,0:39:42.19,Default,,0,0,0,,Loại bùa có thể đánh lui đám quạ
Dialogue: 0,0:39:42.19,0:39:43.55,Default,,0,0,0,,cô dùng ở phủ Tiêu Lẫm hôm đó ấy.
Dialogue: 0,0:39:43.55,0:39:44.48,Default,,0,0,0,,Vậy không được.
Dialogue: 0,0:39:45.51,0:39:46.84,Default,,0,0,0,,Ngươi không thạo,
Dialogue: 0,0:39:46.84,0:39:48.55,Default,,0,0,0,,lỡ bất cẩn vẽ sai
Dialogue: 0,0:39:48.55,0:39:49.84,Default,,0,0,0,,rồi làm nổ cả phòng thì sao?
Dialogue: 0,0:39:53.36,0:39:54.63,Default,,0,0,0,,Dù có làm thế nào
Dialogue: 0,0:39:55.28,0:39:57.11,Default,,0,0,0,,ta cũng không thể vẽ được,
Dialogue: 0,0:39:58.28,0:39:59.28,Default,,0,0,0,,không phải sao?
Dialogue: 0,0:39:59.88,0:40:01.51,Default,,0,0,0,,Thứ bùa Kiến Sinh nhìn thấy
Dialogue: 0,0:40:02.15,0:40:04.44,Default,,0,0,0,,là thứ đẹp nhất,\Nthuần khiết nhất thế gian.
Dialogue: 0,0:40:05.15,0:40:07.67,Default,,0,0,0,,Thân, tâm, ý là tam gia.
Dialogue: 0,0:40:08.11,0:40:10.44,Default,,0,0,0,,Tam gia hợp nhất, kết thành nội đan.
Dialogue: 0,0:40:11.92,0:40:14.51,Default,,0,0,0,,Tâm trống rỗng,\Ntinh thần và sinh mệnh mới hài hòa.
Dialogue: 0,0:40:15.07,0:40:17.63,Default,,0,0,0,,Thân tĩnh tại,\Ntinh lực và cảm xúc mới cô đọng.
Dialogue: 0,0:40:18.11,0:40:21.23,Default,,0,0,0,,Ý chí định hình ba điều này hòa làm một.
Dialogue: 0,0:40:26.36,0:40:27.71,Default,,0,0,0,,Lòng không có tạp niệm
Dialogue: 0,0:40:28.15,0:40:29.36,Default,,0,0,0,,mới có thể thành công.
Dialogue: 0,0:40:29.84,0:40:31.88,Default,,0,0,0,,Ta biết chuyện này rất khó khăn với ngươi,
Dialogue: 0,0:40:33.11,0:40:34.71,Default,,0,0,0,,nhưng ta cũng thật lòng hy vọng
Dialogue: 0,0:40:38.28,0:40:39.48,Default,,0,0,0,,ngươi có thể thành công.
Dialogue: 0,0:40:40.46,0:40:48.34,Default,,0,0,0,,♪Chỉ để gặp được chàng\Nmà một đời ngóng trông xa xăm♪
Dialogue: 0,0:40:50.63,0:40:51.48,Default,,0,0,0,,Đẹp không?
Dialogue: 0,0:40:52.44,0:40:55.23,Default,,0,0,0,,Tiếc là cảnh đẹp trên thế gian này
Dialogue: 0,0:40:56.28,0:40:57.92,Default,,0,0,0,,chỉ như pháo hoa kia,
Dialogue: 0,0:40:58.44,0:40:59.80,Default,,0,0,0,,rực rỡ nhưng ngắn ngủi.
Dialogue: 0,0:41:00.34,0:41:03.10,Default,,0,0,0,,♪Một nỗi niềm trăn trở♪
Dialogue: 0,0:41:03.22,0:41:08.70,Default,,0,0,0,,♪Một đời ngắn ngủi, một giấc mộng dài♪
Dialogue: 0,0:41:08.86,0:41:16.54,Default,,0,0,0,,♪Chỉ để gặp được chàng\Nmà một đời ngóng trông xa xăm♪
Dialogue: 0,0:41:16.67,0:41:18.15,Default,,0,0,0,,Ngày mai thành thân xong,
Dialogue: 0,0:41:19.19,0:41:20.32,Default,,0,0,0,,ngươi sẽ giết ta sao?
Dialogue: 0,0:41:25.86,0:41:28.46,Default,,0,0,0,,♪Một giọt lệ♪
Dialogue: 0,0:41:28.74,0:41:31.51,Default,,0,0,0,,♪Một giấc mộng dài♪
Dialogue: 0,0:41:31.51,0:41:33.23,Default,,0,0,0,,Cái đó thì phải xem tâm trạng của ta.
Dialogue: 0,0:41:34.23,0:41:35.03,Default,,0,0,0,,Thật sự
Dialogue: 0,0:41:36.07,0:41:37.84,Default,,0,0,0,,không thể quay đầu được nữa,
Dialogue: 0,0:41:38.28,0:41:39.07,Default,,0,0,0,,đúng không?
Dialogue: 0,0:41:39.84,0:41:41.63,Default,,0,0,0,,Đã đến nước này rồi,
Dialogue: 0,0:41:42.92,0:41:44.63,Default,,0,0,0,,nàng bảo ta làm sao quay đầu?
Dialogue: 0,0:41:56.44,0:41:57.36,Default,,0,0,0,,Vậy thì đêm nay
Dialogue: 0,0:41:59.51,0:42:00.88,Default,,0,0,0,,ta nên từ biệt với ngươi.
Dialogue: 0,0:42:10.54,0:42:17.38,Default,,0,0,0,,♪Thư gửi người cố hương,\Nmười hai năm tuổi xuân đã qua♪
Dialogue: 0,0:42:18.22,0:42:20.86,Default,,0,0,0,,♪Mọi việc dần trôi♪
Dialogue: 0,0:42:22.44,0:42:23.11,Default,,0,0,0,,[Tang Tửu,]
Dialogue: 0,0:42:24.28,0:42:25.55,Default,,0,0,0,,[nàng có lời muốn nói với ta à?]
Dialogue: 0,0:42:25.55,0:42:28.10,Default,,0,0,0,,♪Đường dài hơn năm tháng♪
Dialogue: 0,0:42:30.23,0:42:31.48,Default,,0,0,0,,[Trước khi đi,]
Dialogue: 0,0:42:32.96,0:42:34.48,Default,,0,0,0,,[còn một thứ,]
Dialogue: 0,0:42:37.19,0:42:38.80,Default,,0,0,0,,[chàng vẫn luôn nợ ta.]
Dialogue: 0,0:42:39.67,0:42:40.67,Default,,0,0,0,,[Thứ gì?]
Dialogue: 0,0:42:42.00,0:42:45.88,Default,,0,0,0,,[Chàng nợ ta đêm động phòng hoa chúc ấy.]
Dialogue: 0,0:42:45.88,0:42:48.26,Default,,0,0,0,,♪Biết rõ nhất là\Nkhoảnh khắc trong giấc mơ♪
Dialogue: 0,0:42:48.66,0:42:52.78,Default,,0,0,0,,♪Đời dài phiêu bạt mãi,\Ntỉnh dậy lại làm khách♪
Dialogue: 0,0:42:53.18,0:42:55.94,Default,,0,0,0,,♪Năm tháng trôi qua,\Nai sống riêng phần người nấy♪
Dialogue: 0,0:42:56.34,0:43:00.34,Default,,0,0,0,,♪Nơi nơi thì sao, cảnh xuân thì sao♪
Dialogue: 0,0:43:00.34,0:43:03.50,Default,,0,0,0,,♪Không mong cầu gì được♪
Dialogue: 0,0:43:03.58,0:43:07.74,Default,,0,0,0,,♪May thay chỉ là chuyện thường trên đời♪
Dialogue: 0,0:43:07.74,0:43:12.54,Default,,0,0,0,,♪Viết khúc hát bình thường♪
Dialogue: 0,0:43:29.58,0:43:33.26,Default,,0,0,0,,♪Cũng chỉ có thể hiểu\Nhoặc vĩnh viễn không hiểu♪
Dialogue: 0,0:43:33.26,0:43:36.70,Default,,0,0,0,,♪Lang thang trôi giạt\Nnhưng chẳng nhíu mày♪
Dialogue: 0,0:43:36.70,0:43:40.54,Default,,0,0,0,,♪Vậy nên trong tiếng cười\Ncủa bao người nơi sảnh đường♪
Dialogue: 0,0:43:41.10,0:43:44.46,Default,,0,0,0,,♪Chỉ lặng im ngắm nhìn ly rượu♪
Dialogue: 0,0:43:44.46,0:43:48.78,Default,,0,0,0,,♪Nơi nơi thì sao, cảnh xuân thì sao♪
Dialogue: 0,0:43:48.82,0:43:51.58,Default,,0,0,0,,♪Không mong cầu gì được♪
Dialogue: 0,0:43:51.86,0:43:55.90,Default,,0,0,0,,♪May thay chỉ là chuyện thường trên đời♪
Dialogue: 0,0:43:56.14,0:44:01.30,Default,,0,0,0,,♪Viết khúc hát bình thường♪
Dialogue: 0,0:44:44.11,0:44:45.03,Default,,0,0,0,,Ta biết
Dialogue: 0,0:44:46.51,0:44:48.07,Default,,0,0,0,,chuyện ta sắp làm tiếp theo
Dialogue: 0,0:44:48.63,0:44:50.23,Default,,0,0,0,,cực kỳ tàn nhẫn với nàng.
Dialogue: 0,0:44:50.59,0:44:51.48,Default,,0,0,0,,Nhưng Tô Tô à,
Dialogue: 0,0:44:51.71,0:44:52.63,Default,,0,0,0,,nàng đừng trách ta.
Dialogue: 0,0:44:53.00,0:44:54.48,Default,,0,0,0,,Chờ sau khi mọi chuyện kết thúc,
Dialogue: 0,0:44:55.88,0:44:58.15,Default,,0,0,0,,ít nhất còn có thể để lại\Ngiấc mộng Phù Sinh
Dialogue: 0,0:45:00.07,0:45:01.15,Default,,0,0,0,,trong linh châu cho nàng
Dialogue: 0,0:45:02.03,0:45:03.15,Default,,0,0,0,,làm kỷ niệm.
Dialogue: 0,0:45:06.67,0:45:07.67,Default,,0,0,0,,[Trời sắp sáng rồi,]
Dialogue: 0,0:45:08.19,0:45:10.03,Default,,0,0,0,,[vẫn còn thời gian làm vài chuyện vô ích.]
Dialogue: 0,0:45:39.96,0:45:40.76,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:46:21.67,0:46:22.63,Default,,0,0,0,,Ngươi đừng chạy!
Dialogue: 0,0:46:40.23,0:46:41.48,Default,,0,0,0,,Sao nàng lại đến đây?
Dialogue: 0,0:46:41.84,0:46:43.59,Default,,0,0,0,,Chàng đến đưa ta về Ma Vực phải không?
Dialogue: 0,0:46:45.84,0:46:46.92,Default,,0,0,0,,Sao lại khóc?
Dialogue: 0,0:46:49.63,0:46:51.11,Default,,0,0,0,,Chỉ là ta bỗng nhiên nhớ tới,
Dialogue: 0,0:46:53.36,0:46:55.00,Default,,0,0,0,,từ lần đầu tiên ta gặp chàng
Dialogue: 0,0:46:55.40,0:46:56.71,Default,,0,0,0,,đến khi rời khỏi nước Thịnh,
Dialogue: 0,0:46:57.11,0:46:58.51,Default,,0,0,0,,không ngờ đều là mùa đông.
Dialogue: 0,0:46:59.40,0:47:01.67,Default,,0,0,0,,Trong kết giới hồi ức này\Ncũng chỉ có mùa đông,
Dialogue: 0,0:47:04.28,0:47:05.23,Default,,0,0,0,,thật đáng tiếc.
Dialogue: 0,0:47:06.67,0:47:07.96,Default,,0,0,0,,Dục Linh tiên tử,
Dialogue: 0,0:47:09.15,0:47:11.51,Default,,0,0,0,,không có thời gian cho nàng\Nthương cảm nữa.
Dialogue: 0,0:47:12.76,0:47:13.36,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:47:13.92,0:47:15.96,Default,,0,0,0,,Sắp đến giờ đại hôn rồi.
Dialogue: 0,0:47:36.40,0:47:37.03,Default,,0,0,0,,Các vị.
Dialogue: 0,0:47:40.51,0:47:42.40,Default,,0,0,0,,Đàm Đài Tẫn đã ngông cuồng đến thế,
Dialogue: 0,0:47:43.15,0:47:45.32,Default,,0,0,0,,muốn mở cổng động ma\Ntrong ngày thành hôn,
Dialogue: 0,0:47:46.03,0:47:47.88,Default,,0,0,0,,thì chúng ta không thể\Nlãng phí cơ hội này.
Dialogue: 0,0:47:49.48,0:47:52.51,Default,,0,0,0,,Không biết các vị đã từng nghe nói đến\Ntrận pháp Tinh Phạt chưa?
Dialogue: 0,0:47:55.71,0:47:57.40,Default,,0,0,0,,Có phải là trận pháp các vị thần hợp sức\Nđánh trọng thương Ma Thần
Dialogue: 0,0:47:57.48,0:47:59.63,Default,,0,0,0,,trong trận chiến trụ trời\Nvạn năm trước không?
Dialogue: 0,0:48:00.32,0:48:02.51,Default,,0,0,0,,Nhưng trận pháp này\Nđã thất truyền từ lâu rồi mà.
Dialogue: 0,0:48:02.96,0:48:04.32,Default,,0,0,0,,Trận pháp này chỉ được dùng
Dialogue: 0,0:48:04.32,0:48:06.03,Default,,0,0,0,,trong đại chiến Thần Ma vạn năm trước.
Dialogue: 0,0:48:06.67,0:48:09.23,Default,,0,0,0,,Vậy sao Công Dã chưởng môn lại biết?
Dialogue: 0,0:48:09.84,0:48:11.03,Default,,0,0,0,,Đúng vậy, Công Dã chưởng môn.
Dialogue: 0,0:48:12.48,0:48:13.48,Default,,0,0,0,,Các vị đừng quên,
Dialogue: 0,0:48:14.15,0:48:17.67,Default,,0,0,0,,Hành Dương Tông ta\Nlà tông phái đứng đầu Tiên Môn,
Dialogue: 0,0:48:18.19,0:48:20.07,Default,,0,0,0,,có bí kíp này cũng chẳng có gì lạ.
Dialogue: 0,0:48:21.96,0:48:24.44,Default,,0,0,0,,Năm xưa mười hai vị thần ngã xuống\Nmới mở được Tinh Phạt.
Dialogue: 0,0:48:24.63,0:48:26.00,Default,,0,0,0,,Sao chúng ta có thể làm được?
Dialogue: 0,0:48:28.55,0:48:29.48,Default,,0,0,0,,Chuyện này không khó.
Dialogue: 0,0:48:29.88,0:48:32.28,Default,,0,0,0,,Chỉ cần các vị đồng ý góp sức,
Dialogue: 0,0:48:33.07,0:48:35.03,Default,,0,0,0,,ta ắt sẽ có cách mở Tinh Phạt.
Dialogue: 0,0:48:36.63,0:48:37.32,Default,,0,0,0,,Công Dã chưởng môn,
Dialogue: 0,0:48:37.67,0:48:38.88,Default,,0,0,0,,dù kết quả ra sao,
Dialogue: 0,0:48:38.88,0:48:41.23,Default,,0,0,0,,Tiêu Dao Tông cũng đồng ý mở trận pháp\Ncùng Hành Dương Tông.
Dialogue: 0,0:48:42.23,0:48:44.51,Default,,0,0,0,,Được, vậy thì phiền các vị,
Dialogue: 0,0:48:44.51,0:48:46.44,Default,,0,0,0,,chuyển lời chuyện hôm nay\Ncho các môn phái lớn,
Dialogue: 0,0:48:47.03,0:48:48.51,Default,,0,0,0,,xem có đồng ý tham gia\Nluyện trận pháp không.
Dialogue: 0,0:48:48.67,0:48:49.55,Default,,0,0,0,,Chuyện này hoàn toàn là tự nguyện.
Dialogue: 0,0:48:50.44,0:48:51.44,Default,,0,0,0,,Chờ đến ngày mai,
Dialogue: 0,0:48:51.76,0:48:53.63,Default,,0,0,0,,ta sẽ cùng các vị đến Ma Vực,
Dialogue: 0,0:48:56.36,0:48:58.32,Default,,0,0,0,,liều chết một trận với Ma Thần.
Dialogue: 0,0:51:59.60,0:52:04.54,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:52:19.56,0:52:27.32,Default,,0,0,0,,♪Nỗi lòng phàm tục\Nlà ngước mắt lên trăng bỗng khuyết♪
Dialogue: 0,0:52:27.32,0:52:35.12,Default,,0,0,0,,♪Hồng trần là đôi mắt thấy\Nmuôn hoa rụng giữa cơn mưa tuyết♪
Dialogue: 0,0:52:35.12,0:52:42.24,Default,,0,0,0,,♪Trắc ẩn là\Nmột cánh bướm trong lòng khi tan biến♪
Dialogue: 0,0:52:42.84,0:52:46.72,Default,,0,0,0,,♪Tỉnh ngộ là gột rửa hồi ức\Ntrong nước đục♪
Dialogue: 0,0:52:46.72,0:52:50.92,Default,,0,0,0,,♪Từ ấy chẳng gặp nhau♪
Dialogue: 0,0:52:52.48,0:52:56.08,Default,,0,0,0,,♪Ta từng thấy lời dịu dàng, từng nở hoa♪
Dialogue: 0,0:52:56.08,0:52:59.32,Default,,0,0,0,,♪Cay mắt đến nỗi nói mớ♪
Dialogue: 0,0:52:59.88,0:53:04.00,Default,,0,0,0,,♪Tơ tình vấn vương, mái ngói dễ vỡ♪
Dialogue: 0,0:53:04.00,0:53:07.52,Default,,0,0,0,,♪Một vòng tay có sự sợ hãi vô tận♪
Dialogue: 0,0:53:08.12,0:53:11.56,Default,,0,0,0,,♪Ta kính trọng người biết bao,\Nthời gian thấm thoát thoi đưa♪
Dialogue: 0,0:53:11.56,0:53:15.24,Default,,0,0,0,,♪Từng vững tin được yêu trong phút chốc♪
Dialogue: 0,0:53:15.32,0:53:19.44,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:53:19.44,0:53:27.20,Default,,0,0,0,,♪Sự thành kính tựa ánh trăng không tì vết♪
Dialogue: 0,0:53:29.20,0:53:32.60,Default,,0,0,0,,♪Hãy lắng nghe hơi thở của đóa hoa♪
Dialogue: 0,0:53:32.72,0:53:36.12,Default,,0,0,0,,♪Như sự phồn hoa của chúng sinh muôn loài♪
Dialogue: 0,0:53:36.68,0:53:40.88,Default,,0,0,0,,♪Dẫu đi bao lâu, sao trời hay bão cát♪
Dialogue: 0,0:53:40.88,0:53:45.08,Default,,0,0,0,,♪Ánh trăng là bộ giáp của ta♪
Dialogue: 0,0:53:45.08,0:53:48.40,Default,,0,0,0,,♪Ta mong sau này người mang theo vết sẹo♪
Dialogue: 0,0:53:48.40,0:53:52.36,Default,,0,0,0,,♪Cũng thử sống dịu dàng một phen♪
Dialogue: 0,0:53:52.52,0:53:56.04,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:53:56.04,0:54:03.68,Default,,0,0,0,,♪Yêu lại người từng căm hận♪
Dialogue: 0,0:54:03.68,0:54:11.08,Default,,0,0,0,,♪Kiếp phù du nhỏ, giấc mộng lớn♪
Dialogue: 0,0:54:11.08,0:54:19.72,Default,,0,0,0,,♪Xin đừng phụ lòng nhau♪
