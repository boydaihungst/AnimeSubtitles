Dialogue: 0,0:00:00.00,0:00:23.14,Default,,0,0,0,,Nhóm dịch đang gắng sức làm việc, mau chóng thay thế bản phụ đề cuối, cảm ơn bạn đã kiên nhẫn chờ đợi.
Dialogue: 0,0:00:23.14,0:00:26.94,Default,,0,0,0,,♪Đêm tối, trăng ướt, máu lạnh♪
Dialogue: 0,0:00:27.34,0:00:30.74,Default,,0,0,0,,♪Phơi bày trước\Nđôi mắt sợ ánh sáng của ta♪
Dialogue: 0,0:00:30.98,0:00:34.50,Default,,0,0,0,,♪Là sáng bừng hay ấm áp♪
Dialogue: 0,0:00:34.62,0:00:38.06,Default,,0,0,0,,♪Ta chỉ có thể suy đoán bằng trực giác♪
Dialogue: 0,0:00:38.78,0:00:46.18,Default,,0,0,0,,♪Ôi, tình yêu khuynh thế như ngọc,\Ntạo nên ta♪
Dialogue: 0,0:00:46.62,0:00:53.90,Default,,0,0,0,,♪Ôi, tơ tình vương vấn♪
Dialogue: 0,0:00:55.30,0:00:58.90,Default,,0,0,0,,♪Ta không sợ trên cõi đời này♪
Dialogue: 0,0:00:59.18,0:01:02.78,Default,,0,0,0,,♪Chúng sinh đối xử với ta ra sao♪
Dialogue: 0,0:01:03.46,0:01:06.58,Default,,0,0,0,,♪Đột phá, vùng vẫy♪
Dialogue: 0,0:01:06.86,0:01:11.22,Default,,0,0,0,,♪Làm sao để phân biệt chính tà, thiện ác♪
Dialogue: 0,0:01:11.58,0:01:14.90,Default,,0,0,0,,♪Từng có khoảnh khắc yếu đuối♪
Dialogue: 0,0:01:15.22,0:01:18.66,Default,,0,0,0,,♪Dùng nụ hôn tình yêu\Nđể vết thương lành lại♪
Dialogue: 0,0:01:19.14,0:01:22.62,Default,,0,0,0,,♪Sự tồn tại của ta♪
Dialogue: 0,0:01:23.06,0:01:29.70,Default,,0,0,0,,♪Sẽ không vì gai nhọn mà gãy cánh♪
Dialogue: 0,0:01:31.18,0:01:36.02,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:01:36.06,0:01:38.98,Default,,0,0,0,,[Tập 38]
Dialogue: 0,0:02:10.19,0:02:11.43,Default,,0,0,0,,[Mạt Nữ,]
Dialogue: 0,0:02:12.19,0:02:14.43,Default,,0,0,0,,[ngươi đến để trả thù cho muội muội.]
Dialogue: 0,0:02:15.19,0:02:16.96,Default,,0,0,0,,[Nhưng ngươi là một yêu ma,]
Dialogue: 0,0:02:17.56,0:02:19.59,Default,,0,0,0,,[còn giờ ta đã là Ma Thần,]
Dialogue: 0,0:02:19.84,0:02:21.63,Default,,0,0,0,,[chỉ dựa vào chút ít tu vi của ngươi]
Dialogue: 0,0:02:21.63,0:02:23.15,Default,,0,0,0,,[mà cũng dám chống đối ta.]
Dialogue: 0,0:02:24.24,0:02:26.43,Default,,0,0,0,,[Chi bằng ngươi cũng\Ntrở thành một phần của ta]
Dialogue: 0,0:02:26.84,0:02:28.03,Default,,0,0,0,,[giống như muội muội ngươi,]
Dialogue: 0,0:02:28.56,0:02:32.12,Default,,0,0,0,,[đoàn tụ với muội muội ngươi ở chỗ ta đi.]
Dialogue: 0,0:02:32.43,0:02:33.36,Default,,0,0,0,,[Tự Anh,]
Dialogue: 0,0:02:33.75,0:02:35.12,Default,,0,0,0,,[tỷ tỷ đến với muội đây.]
Dialogue: 0,0:02:35.12,0:02:35.71,Default,,0,0,0,,Phá!
Dialogue: 0,0:02:38.71,0:02:39.91,Default,,0,0,0,,Cô nương, đi mau.
Dialogue: 0,0:02:43.40,0:02:44.96,Default,,0,0,0,,[Lại thêm một kẻ hiến tế.]
Dialogue: 0,0:03:10.03,0:03:13.52,Default,,0,0,0,,Tới đây, tất cả hãy thuộc về ta,
Dialogue: 0,0:03:13.71,0:03:15.56,Default,,0,0,0,,thuộc về đạo Đồng Bi.
Dialogue: 0,0:03:16.15,0:03:18.36,Default,,0,0,0,,Đây là vinh hạnh của các ngươi.
Dialogue: 0,0:03:30.71,0:03:31.87,Default,,0,0,0,,Hắn lại đang cắn nuốt
Dialogue: 0,0:03:31.87,0:03:33.59,Default,,0,0,0,,sức mạnh yêu ma của cả Hoang Uyên.
Dialogue: 0,0:03:35.19,0:03:36.36,Default,,0,0,0,,Đạo Đồng Bi.
Dialogue: 0,0:03:44.80,0:03:45.91,Default,,0,0,0,,Đây là thứ gì?
Dialogue: 0,0:03:46.87,0:03:47.84,Default,,0,0,0,,Là đạo Đồng Bi.
Dialogue: 0,0:03:49.56,0:03:51.36,Default,,0,0,0,,Đàm Đài Tẫn đã mở đạo Đồng Bi rồi.
Dialogue: 0,0:03:57.71,0:03:58.84,Default,,0,0,0,,[Là đạo Đồng Bi,]
Dialogue: 0,0:03:59.43,0:04:00.31,Default,,0,0,0,,[sao lại thế được?]
Dialogue: 0,0:04:02.12,0:04:02.96,Default,,0,0,0,,Mau nhìn, nhìn kìa.
Dialogue: 0,0:04:02.96,0:04:03.80,Default,,0,0,0,,Trên trời.
Dialogue: 0,0:04:04.19,0:04:05.47,Default,,0,0,0,,- Đó là gì vậy?\N- Không biết nữa.
Dialogue: 0,0:04:05.47,0:04:07.19,Default,,0,0,0,,Mọi người nói xem đó là gì?
Dialogue: 0,0:04:07.28,0:04:08.00,Default,,0,0,0,,Không biết.
Dialogue: 0,0:04:08.00,0:04:08.75,Default,,0,0,0,,Xem kìa…
Dialogue: 0,0:04:08.91,0:04:09.75,Default,,0,0,0,,Đó là gì vậy?
Dialogue: 0,0:04:11.47,0:04:12.28,Default,,0,0,0,,Hỏng rồi…
Dialogue: 0,0:04:12.28,0:04:13.40,Default,,0,0,0,,Đạo Đồng Bi mở rồi.
Dialogue: 0,0:04:15.00,0:04:16.27,Default,,0,0,0,,Đạo Đồng Bi, phải làm sao đây?
Dialogue: 0,0:04:16.27,0:04:17.12,Default,,0,0,0,,Phải làm thế nào đây?
Dialogue: 0,0:04:17.51,0:04:18.80,Default,,0,0,0,,Đạo Đồng Bi đã mở,
Dialogue: 0,0:04:19.12,0:04:21.56,Default,,0,0,0,,các đệ tử Xích Tiêu Tông ngưng lùng bắt,
Dialogue: 0,0:04:21.68,0:04:23.24,Default,,0,0,0,,theo ta mau chóng về phái,
Dialogue: 0,0:04:23.39,0:04:25.19,Default,,0,0,0,,cùng dựng kết giới phòng hộ,
Dialogue: 0,0:04:25.19,0:04:26.39,Default,,0,0,0,,giữ gìn sức lực.
Dialogue: 0,0:04:26.92,0:04:27.56,Default,,0,0,0,,Đi.
Dialogue: 0,0:04:27.95,0:04:30.39,Default,,0,0,0,,Mau về mở đại trận hộ tông.
Dialogue: 0,0:04:30.72,0:04:31.07,Default,,0,0,0,,Vâng.
Dialogue: 0,0:04:31.07,0:04:31.80,Default,,0,0,0,,Đạo Đồng Bi đã mở,
Dialogue: 0,0:04:31.80,0:04:32.95,Default,,0,0,0,,thế gian đâu còn nơi nào an toàn nữa.
Dialogue: 0,0:04:32.95,0:04:34.48,Default,,0,0,0,,Đúng vậy, các ngươi còn có chỗ trốn,
Dialogue: 0,0:04:34.48,0:04:35.63,Default,,0,0,0,,những người khác phải làm sao đây?
Dialogue: 0,0:04:39.27,0:04:40.63,Default,,0,0,0,,Đế Miện, dừng tay.
Dialogue: 0,0:04:42.07,0:04:43.95,Default,,0,0,0,,Lại có kẻ nào đến nộp mạng?
Dialogue: 0,0:05:12.48,0:05:14.56,Default,,0,0,0,,[Đế Miện đã hoàn toàn\Nbị Ma Thần khống chế rồi.]
Dialogue: 0,0:05:15.27,0:05:17.27,Default,,0,0,0,,[Để khởi động đạo Đồng Bi\Nmà bất chấp mọi giá.]
Dialogue: 0,0:05:18.07,0:05:20.19,Default,,0,0,0,,[Phải nghĩ cách\Nđánh thức Đế Miện trước mới được.]
Dialogue: 0,0:05:42.60,0:05:43.24,Default,,0,0,0,,Chạy mau.
Dialogue: 0,0:05:45.04,0:05:46.27,Default,,0,0,0,,Mau, mau lên!
Dialogue: 0,0:05:56.63,0:05:57.19,Default,,0,0,0,,Chạy mau!
Dialogue: 0,0:06:02.36,0:06:02.92,Default,,0,0,0,,Các vị,
Dialogue: 0,0:06:03.72,0:06:05.00,Default,,0,0,0,,nay Ma Thần đã hồi sinh,
Dialogue: 0,0:06:05.36,0:06:06.36,Default,,0,0,0,,đạo Đồng Bi đã mở,
Dialogue: 0,0:06:06.68,0:06:08.39,Default,,0,0,0,,vận mệnh tứ châu đã không thể cứu vãn,
Dialogue: 0,0:06:09.48,0:06:11.72,Default,,0,0,0,,chiến cũng chết, không chiến cũng chết,
Dialogue: 0,0:06:12.31,0:06:14.12,Default,,0,0,0,,các vị có ai chịu cùng ta vào Hoang Uyên
Dialogue: 0,0:06:14.51,0:06:15.95,Default,,0,0,0,,liều chết quyết chiến một trận\Nvới Ma Thần không?
Dialogue: 0,0:06:16.56,0:06:17.39,Default,,0,0,0,,Ta xin theo huynh.
Dialogue: 0,0:06:17.63,0:06:18.36,Default,,0,0,0,,Ta đồng ý.
Dialogue: 0,0:06:18.95,0:06:19.75,Default,,0,0,0,,Ta cũng đồng ý.
Dialogue: 0,0:06:19.92,0:06:20.80,Default,,0,0,0,,Bọn ta đồng ý.
Dialogue: 0,0:06:20.80,0:06:22.39,Default,,0,0,0,,Ta sẵn sàng liều chết đấu với Ma Thần.
Dialogue: 0,0:06:23.00,0:06:24.00,Default,,0,0,0,,Ta cũng sẵn sàng đi theo.
Dialogue: 0,0:06:26.04,0:06:28.00,Default,,0,0,0,,Đàm Đài Tẫn lắm mưu nhiều kế,
Dialogue: 0,0:06:28.00,0:06:29.24,Default,,0,0,0,,nay hắn đã thành Ma Thần,
Dialogue: 0,0:06:29.63,0:06:30.72,Default,,0,0,0,,càng cực kỳ nguy hiểm.
Dialogue: 0,0:06:31.00,0:06:32.51,Default,,0,0,0,,Một khi phát hiện ra\Ntung tích của Đàm Đài Tẫn,
Dialogue: 0,0:06:32.83,0:06:34.56,Default,,0,0,0,,phải lập tức truyền tin\Nliên lạc đồng đội chi viện.
Dialogue: 0,0:06:35.07,0:06:36.56,Default,,0,0,0,,Chúng ta bắt tay giết chết hắn,
Dialogue: 0,0:06:36.92,0:06:38.12,Default,,0,0,0,,tuyệt đối không thể\Nhành động thiếu suy nghĩ
Dialogue: 0,0:06:38.39,0:06:39.43,Default,,0,0,0,,hoặc bị hắn mê hoặc.
Dialogue: 0,0:06:58.39,0:06:59.19,Default,,0,0,0,,[Ma Thần,]
Dialogue: 0,0:06:59.60,0:07:01.31,Default,,0,0,0,,[ngươi hại đồ đệ của ta không thành,]
Dialogue: 0,0:07:01.72,0:07:02.72,Default,,0,0,0,,[lại khống chế Đế Miện,]
Dialogue: 0,0:07:02.72,0:07:04.12,Default,,0,0,0,,[cưỡng chế mở đạo Đồng Bi.]
Dialogue: 0,0:07:04.75,0:07:06.68,Default,,0,0,0,,[Nhân lúc này ngươi còn chưa thành công,]
Dialogue: 0,0:07:07.19,0:07:09.24,Default,,0,0,0,,[giờ ta sẽ phá hủy động ma này của ngươi.]
Dialogue: 0,0:07:12.00,0:07:12.83,Default,,0,0,0,,Đế Miện,
Dialogue: 0,0:07:12.95,0:07:14.27,Default,,0,0,0,,ngăn cản hắn.
Dialogue: 0,0:07:35.39,0:07:37.24,Default,,0,0,0,,Ngươi muốn hủy hoại đạo Đồng Bi?
Dialogue: 0,0:07:37.80,0:07:41.39,Default,,0,0,0,,Vậy thì ta sẽ cho\Ncác ngươi chôn chung với nó.
Dialogue: 0,0:07:56.00,0:07:56.83,Default,,0,0,0,,[Chuyện gì thế này?]
Dialogue: 0,0:07:57.12,0:07:59.27,Default,,0,0,0,,[Ta vừa bị Ma Thần khống chế.]
Dialogue: 0,0:07:59.80,0:08:01.24,Default,,0,0,0,,[Ma Thần biến mất rồi.]
Dialogue: 0,0:08:07.00,0:08:08.63,Default,,0,0,0,,[Ma khí phản phệ.]
Dialogue: 0,0:08:14.48,0:08:16.60,Default,,0,0,0,,Đạo Đồng Bi đã mở rồi,
Dialogue: 0,0:08:16.60,0:08:18.43,Default,,0,0,0,,đúng là bỗng dưng có được\Nmà chẳng tốn công lao.
Dialogue: 0,0:08:18.80,0:08:20.04,Default,,0,0,0,,Một vạn năm rồi,
Dialogue: 0,0:08:20.39,0:08:21.92,Default,,0,0,0,,cuối cùng cũng đến lượt ta.
Dialogue: 0,0:08:22.95,0:08:24.95,Default,,0,0,0,,Ta sẽ trở thành Ma Thần mới.
Dialogue: 0,0:08:37.20,0:08:39.36,Default,,0,0,0,,[Sao sức mạnh của đạo Đồng Bi\Nlại yếu như vậy?]
Dialogue: 0,0:08:40.00,0:08:42.00,Default,,0,0,0,,[Đạo Đồng Bi\Nmà Ma Thần mở ra vạn năm trước]
Dialogue: 0,0:08:42.00,0:08:43.03,Default,,0,0,0,,[không phải thế này.]
Dialogue: 0,0:08:45.03,0:08:46.63,Default,,0,0,0,,[Lẽ nào là do oán khí không đủ?]
Dialogue: 0,0:08:48.60,0:08:49.67,Default,,0,0,0,,[Oán khí.]
Dialogue: 0,0:08:51.63,0:08:54.67,Default,,0,0,0,,[Ta cần thu thập\Nnhiều đau khổ oán hận hơn nữa.]
Dialogue: 0,0:08:57.08,0:08:58.72,Default,,0,0,0,,[Không có kết nối với Ma Thần,]
Dialogue: 0,0:08:59.20,0:09:01.84,Default,,0,0,0,,[quả nhiên đạo Đồng Bi không thể\Nphát huy sức mạnh lớn nhất.]
Dialogue: 0,0:09:02.79,0:09:03.72,Default,,0,0,0,,[Ta hiểu rồi.]
Dialogue: 0,0:09:04.20,0:09:05.79,Default,,0,0,0,,[Hóa ra cơ duyên của mọi chuyện]
Dialogue: 0,0:09:06.15,0:09:07.24,Default,,0,0,0,,[lại là như thế.]
Dialogue: 0,0:09:07.55,0:09:08.36,Default,,0,0,0,,[Triệu Du,]
Dialogue: 0,0:09:09.44,0:09:11.27,Default,,0,0,0,,[ngươi tưởng ngươi chạy thoát được sao?]
Dialogue: 0,0:09:12.12,0:09:13.39,Default,,0,0,0,,[Đạo Đồng Bi đã mở]
Dialogue: 0,0:09:13.87,0:09:15.79,Default,,0,0,0,,[thì không ai có thể đóng nó lại.]
Dialogue: 0,0:09:16.67,0:09:18.91,Default,,0,0,0,,[Chờ ta thu thập đủ oán hận,]
Dialogue: 0,0:09:19.27,0:09:20.72,Default,,0,0,0,,[tiếp tục củng cố đạo Đồng Bi]
Dialogue: 0,0:09:21.12,0:09:25.03,Default,,0,0,0,,[thì tam giới tứ châu sẽ phải\Nthần phục ta.]
Dialogue: 0,0:09:47.87,0:09:48.67,Default,,0,0,0,,Mạt Nữ?
Dialogue: 0,0:09:55.67,0:09:56.48,Default,,0,0,0,,Mạt Nữ.
Dialogue: 0,0:09:59.48,0:09:59.96,Default,,0,0,0,,Nàng…
Dialogue: 0,0:10:00.91,0:10:01.91,Default,,0,0,0,,Sao nàng lại ở đây?
Dialogue: 0,0:10:04.12,0:10:05.60,Default,,0,0,0,,Ma Thần đã sống lại rồi,
Dialogue: 0,0:10:06.24,0:10:07.67,Default,,0,0,0,,nơi này vô cùng nguy hiểm,
Dialogue: 0,0:10:08.67,0:10:10.36,Default,,0,0,0,,mau rời khỏi đây đi.
Dialogue: 0,0:10:21.15,0:10:22.24,Default,,0,0,0,,[Cuối cùng cũng tìm thấy rồi.]
Dialogue: 0,0:10:24.12,0:10:26.24,Default,,0,0,0,,[Có lẽ đây chính là trung tâm\Ncủa đạo Đồng Bi.]
Dialogue: 0,0:10:29.55,0:10:32.44,Default,,0,0,0,,[Ngăn cản Ma Thần hồi sinh\Nvốn là nhân duyên của ta.]
Dialogue: 0,0:10:33.15,0:10:34.55,Default,,0,0,0,,[Nay đạo Đồng Bi đã mở,]
Dialogue: 0,0:10:34.84,0:10:36.39,Default,,0,0,0,,[dù Ma Thần bên trong là ai,]
Dialogue: 0,0:10:36.39,0:10:38.03,Default,,0,0,0,,[ta cũng phải\Nliều chết chiến đấu với hắn.]
Dialogue: 0,0:10:40.20,0:10:40.84,Default,,0,0,0,,[Mẹ,]
Dialogue: 0,0:10:41.36,0:10:42.03,Default,,0,0,0,,[cha,]
Dialogue: 0,0:10:43.24,0:10:46.67,Default,,0,0,0,,[hai người nhất định phải phù hộ cho con.]
Dialogue: 0,0:11:15.72,0:11:16.39,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:11:17.03,0:11:19.48,Default,,0,0,0,,con tới rồi, phụ thân rất mừng.
Dialogue: 0,0:11:20.08,0:11:21.24,Default,,0,0,0,,Nhờ phúc của phụ thân,
Dialogue: 0,0:11:22.00,0:11:23.32,Default,,0,0,0,,con không bị mất mạng.
Dialogue: 0,0:11:30.67,0:11:31.48,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:11:32.27,0:11:33.84,Default,,0,0,0,,con không tin ta cũng được,
Dialogue: 0,0:11:34.20,0:11:35.27,Default,,0,0,0,,hận ta cũng được.
Dialogue: 0,0:11:35.60,0:11:37.03,Default,,0,0,0,,Ta có nỗi khổ riêng.
Dialogue: 0,0:11:37.44,0:11:39.24,Default,,0,0,0,,Ngoài chuyện phong ấn tà cốt,
Dialogue: 0,0:11:39.24,0:11:40.84,Default,,0,0,0,,ta chưa bao giờ lừa con,
Dialogue: 0,0:11:41.08,0:11:42.91,Default,,0,0,0,,cũng chưa từng muốn hại đến tính mạng con.
Dialogue: 0,0:11:43.20,0:11:44.67,Default,,0,0,0,,Vậy thì phải cảm ơn phụ thân rồi.
Dialogue: 0,0:11:46.87,0:11:48.00,Default,,0,0,0,,Giờ thì tốt rồi.
Dialogue: 0,0:11:48.24,0:11:49.48,Default,,0,0,0,,Đạo Đồng Bi đã mở,
Dialogue: 0,0:11:49.60,0:11:51.48,Default,,0,0,0,,ta đã có được sức mạnh của Ma Thần.
Dialogue: 0,0:11:51.67,0:11:54.12,Default,,0,0,0,,Chỉ cần hiến tế đủ nhiều đau khổ, oán hận,
Dialogue: 0,0:11:54.32,0:11:56.63,Default,,0,0,0,,ta sẽ có thể trở thành vị thần duy nhất\Ntrên thế gian.
Dialogue: 0,0:11:57.55,0:11:58.36,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:11:59.55,0:12:01.36,Default,,0,0,0,,cha của con là chủ nhân của thiên hạ,
Dialogue: 0,0:12:02.55,0:12:06.12,Default,,0,0,0,,còn con sẽ là đứa con gái cưng\Nta nâng niu, yêu thương nhất.
Dialogue: 0,0:12:06.79,0:12:08.44,Default,,0,0,0,,Vậy thì đúng là
Dialogue: 0,0:12:09.36,0:12:10.75,Default,,0,0,0,,ta cầu mà không được.
Dialogue: 0,0:12:17.39,0:12:19.03,Default,,0,0,0,,Con đã làm một chuyện ngu ngốc.
Dialogue: 0,0:12:19.24,0:12:20.91,Default,,0,0,0,,Ta còn từng làm chuyện ngu ngốc hơn,
Dialogue: 0,0:12:21.84,0:12:23.15,Default,,0,0,0,,đó chính là tin ông,
Dialogue: 0,0:12:23.36,0:12:24.60,Default,,0,0,0,,hại chết cha ta.
Dialogue: 0,0:12:24.60,0:12:26.08,Default,,0,0,0,,Ta mới là phụ thân thật sự của con.
Dialogue: 0,0:12:26.08,0:12:27.60,Default,,0,0,0,,Là ta ban cho con sinh mạng.
Dialogue: 0,0:12:29.12,0:12:31.79,Default,,0,0,0,,Vậy thì hôm nay trả cái mạng này cho ông.
Dialogue: 0,0:12:32.20,0:12:35.12,Default,,0,0,0,,Hôm nay ta và ông quyết chiến tới chết!
Dialogue: 0,0:12:54.67,0:12:56.15,Default,,0,0,0,,Con lại vì một người ngoài
Dialogue: 0,0:12:56.15,0:12:57.75,Default,,0,0,0,,mà dám ra tay với cha ruột của con.
Dialogue: 0,0:12:57.75,0:12:58.55,Default,,0,0,0,,Câm miệng!
Dialogue: 0,0:13:07.87,0:13:10.24,Default,,0,0,0,,Cha đi khắp tứ châu tìm ta,
Dialogue: 0,0:13:11.12,0:13:12.44,Default,,0,0,0,,che chở cho ta chào đời,
Dialogue: 0,0:13:13.36,0:13:15.00,Default,,0,0,0,,nuôi dạy ta nên người,
Dialogue: 0,0:13:16.03,0:13:17.91,Default,,0,0,0,,dạy ta thấu tình đạt lý,
Dialogue: 0,0:13:18.75,0:13:20.60,Default,,0,0,0,,dạy ta thương yêu chúng sinh.
Dialogue: 0,0:13:22.79,0:13:25.44,Default,,0,0,0,,Ông ấy toàn tâm toàn ý\Nchăm lo yêu thương ta,
Dialogue: 0,0:13:25.84,0:13:27.91,Default,,0,0,0,,liều chết bảo vệ tính mạng ta.
Dialogue: 0,0:13:31.44,0:13:33.55,Default,,0,0,0,,Đời này kiếp này,
Dialogue: 0,0:13:34.36,0:13:36.51,Default,,0,0,0,,ta chỉ có một người cha ấy.
Dialogue: 0,0:13:53.67,0:13:54.84,Default,,0,0,0,,Còn ông,
Dialogue: 0,0:13:56.60,0:13:59.63,Default,,0,0,0,,chỉ là kẻ thù giết cha của ta.
Dialogue: 0,0:14:19.48,0:14:21.84,Default,,0,0,0,,Tính tình con đúng là giống hệt mẹ con,
Dialogue: 0,0:14:22.67,0:14:24.00,Default,,0,0,0,,vừa ngay thẳng vừa ngang bướng.
Dialogue: 0,0:14:26.87,0:14:28.03,Default,,0,0,0,,Vậy chắc chắn là bà ấy
Dialogue: 0,0:14:29.36,0:14:32.12,Default,,0,0,0,,đã hối hận vì năm xưa không giết ông.
Dialogue: 0,0:14:44.15,0:14:45.79,Default,,0,0,0,,Một vạn năm nay,
Dialogue: 0,0:14:45.79,0:14:48.87,Default,,0,0,0,,ta chịu đựng\Nsự khổ nhục và nỗi đau đớn vô tận
Dialogue: 0,0:14:49.03,0:14:50.87,Default,,0,0,0,,mới có được ngày hôm nay.
Dialogue: 0,0:14:52.03,0:14:54.08,Default,,0,0,0,,Con chẳng những không biết chúc mừng cha
Dialogue: 0,0:14:55.55,0:14:57.20,Default,,0,0,0,,mà còn phản nghịch đến mức này.
Dialogue: 0,0:14:57.87,0:14:59.39,Default,,0,0,0,,Cha quá đau lòng,
Dialogue: 0,0:15:00.72,0:15:01.96,Default,,0,0,0,,quá thất vọng.
Dialogue: 0,0:15:08.91,0:15:09.72,Default,,0,0,0,,Đế Miện,
Dialogue: 0,0:15:12.08,0:15:13.79,Default,,0,0,0,,ông thật đáng thương.
Dialogue: 0,0:15:16.24,0:15:17.79,Default,,0,0,0,,Đã vậy thì
Dialogue: 0,0:15:19.36,0:15:21.96,Default,,0,0,0,,ta chỉ đành cho con\Nđược giải thoát hoàn toàn thôi.
Dialogue: 0,0:15:22.27,0:15:23.79,Default,,0,0,0,,Ta sẽ hiến tế nỗi đau khổ oán hận của con
Dialogue: 0,0:15:24.00,0:15:25.84,Default,,0,0,0,,cho đạo Đồng Bi.
Dialogue: 0,0:15:26.36,0:15:27.67,Default,,0,0,0,,Vậy thì cũng coi như con đã báo đáp
Dialogue: 0,0:15:27.67,0:15:29.44,Default,,0,0,0,,ơn sinh thành của ta.
Dialogue: 0,0:16:11.97,0:16:14.93,Default,,0,0,0,,♪Ta không sợ trên cõi đời này♪
Dialogue: 0,0:16:15.20,0:16:18.87,Default,,0,0,0,,♪Chúng sinh đối xử với ta ra sao♪
Dialogue: 0,0:16:19.59,0:16:23.09,Default,,0,0,0,,♪Đột phá, vùng vẫy♪
Dialogue: 0,0:16:24.75,0:16:26.12,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:16:26.67,0:16:28.27,Default,,0,0,0,,chàng vẫn còn sống.
Dialogue: 0,0:16:30.87,0:16:32.00,Default,,0,0,0,,Tốt quá rồi.
Dialogue: 0,0:16:37.87,0:16:38.67,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:16:39.00,0:16:40.36,Default,,0,0,0,,ngươi là ma thai
Dialogue: 0,0:16:40.36,0:16:42.24,Default,,0,0,0,,mà lại dâng tà cốt cho kẻ khác.
Dialogue: 0,0:16:42.75,0:16:44.24,Default,,0,0,0,,Chờ ta giết ngươi rồi,
Dialogue: 0,0:16:44.72,0:16:46.60,Default,,0,0,0,,ta sẽ là Ma Thần duy nhất.
Dialogue: 0,0:16:52.84,0:16:54.03,Default,,0,0,0,,Chịu chết đi.
Dialogue: 0,0:16:55.82,0:16:58.48,Default,,0,0,0,,♪Cùng nàng sống kiếp phù du hư ảo♪
Dialogue: 0,0:17:01.08,0:17:02.32,Default,,0,0,0,,Đàm Đài Tẫn!
Dialogue: 0,0:17:03.77,0:17:06.66,Default,,0,0,0,,♪Lưu luyến hạt ngọc giữa mi tâm,\Nánh sáng trên người nàng♪
Dialogue: 0,0:17:06.66,0:17:10.64,Default,,0,0,0,,♪Cởi bỏ áo giáp, cùng ngã xuống♪
Dialogue: 0,0:17:11.49,0:17:15.36,Default,,0,0,0,,♪Nếu còn có thể bắt đầu lại cùng nàng♪
Dialogue: 0,0:17:15.36,0:17:17.91,Default,,0,0,0,,♪Như thuở ban đầu thì sao♪
Dialogue: 0,0:17:17.91,0:17:21.45,Default,,0,0,0,,♪Trong giấc mộng của nhau♪
Dialogue: 0,0:17:21.45,0:17:26.02,Default,,0,0,0,,♪Chúng ta như ánh trăng đằng đẵng soi rọi♪
Dialogue: 0,0:17:26.02,0:17:28.98,Default,,0,0,0,,♪Ta không sợ trên cõi đời này♪
Dialogue: 0,0:17:30.00,0:17:31.11,Default,,0,0,0,,Sao có thể như vậy được?
Dialogue: 0,0:17:33.07,0:17:34.24,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:17:37.44,0:17:41.80,Default,,0,0,0,,♪Làm sao để phân biệt chính tà, thiện ác♪
Dialogue: 0,0:17:42.31,0:17:44.55,Default,,0,0,0,,Ngươi mà cũng xứng dùng kiếm Trảm Thiên ư?
Dialogue: 0,0:17:47.72,0:17:48.75,Default,,0,0,0,,Kiếm Trảm Thiên của ta.
Dialogue: 0,0:17:49.50,0:17:53.15,Default,,0,0,0,,♪Sự tồn tại của ta♪
Dialogue: 0,0:17:53.15,0:18:00.90,Default,,0,0,0,,♪Sẽ không vì gai nhọn mà gãy cánh♪
Dialogue: 0,0:18:24.44,0:18:25.07,Default,,0,0,0,,Không.
Dialogue: 0,0:18:25.55,0:18:26.31,Default,,0,0,0,,Không.
Dialogue: 0,0:18:27.03,0:18:28.31,Default,,0,0,0,,Ta không thể chết được.
Dialogue: 0,0:18:28.83,0:18:31.96,Default,,0,0,0,,Ta còn chưa trở thành chủ nhân tam giới.
Dialogue: 0,0:18:33.64,0:18:35.31,Default,,0,0,0,,Ngươi nên chết đi từ lâu rồi.
Dialogue: 0,0:19:08.00,0:19:08.72,Default,,0,0,0,,Cha ơi,
Dialogue: 0,0:19:11.55,0:19:13.40,Default,,0,0,0,,cha có thể nhắm mắt rồi.
Dialogue: 0,0:19:15.35,0:19:17.96,Default,,0,0,0,,Cửu Mân đã báo thù cho cha rồi.
Dialogue: 0,0:19:27.64,0:19:31.16,Default,,0,0,0,,♪Màn đêm vô tận đang tới dần♪
Dialogue: 0,0:19:32.61,0:19:35.90,Default,,0,0,0,,♪Sắc đen nhuộm bóng dáng ai♪
Dialogue: 0,0:19:37.81,0:19:41.46,Default,,0,0,0,,♪Vô số tiếng nói thì thầm♪
Dialogue: 0,0:19:43.51,0:19:44.51,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:19:45.11,0:19:46.59,Default,,0,0,0,,chàng đang làm gì vậy?
Dialogue: 0,0:19:49.59,0:19:51.00,Default,,0,0,0,,Đế Miện đã chết rồi,
Dialogue: 0,0:19:51.40,0:19:53.40,Default,,0,0,0,,mọi chuyện đều đã kết thúc.
Dialogue: 0,0:19:57.82,0:20:01.36,Default,,0,0,0,,♪Trăng mờ che đôi mắt♪
Dialogue: 0,0:20:04.07,0:20:04.88,Default,,0,0,0,,[Tô Tô,]
Dialogue: 0,0:20:05.83,0:20:06.88,Default,,0,0,0,,[xin lỗi.]
Dialogue: 0,0:20:07.90,0:20:09.44,Default,,0,0,0,,♪Chỉ trong một ý niệm♪
Dialogue: 0,0:20:09.45,0:20:12.14,Default,,0,0,0,,♪Lúc sáng lúc tối, biến hóa muôn vàn♪
Dialogue: 0,0:20:12.14,0:20:14.58,Default,,0,0,0,,♪Quay đầu lại thấy màn kịch của số mệnh♪
Dialogue: 0,0:20:16.68,0:20:18.20,Default,,0,0,0,,Không!
Dialogue: 0,0:20:22.14,0:20:28.24,Default,,0,0,0,,♪Như tác thành, chẳng sợ thiêu đốt bản thân\Nnhư lửa cháy, chớp tắt như làn khói♪
Dialogue: 0,0:20:28.77,0:20:33.53,Default,,0,0,0,,♪Một ý niệm, nhớ đến\Nlần đầu gặp gỡ dưới ánh trăng♪
Dialogue: 0,0:20:33.53,0:20:38.04,Default,,0,0,0,,♪Giấc mộng lớn qua bao năm,\Nba kiếp chưa ngơi nghỉ♪
Dialogue: 0,0:20:38.04,0:20:43.84,Default,,0,0,0,,♪Số phận đã ấn định,\Nnếu muốn viết lại lời tiên tri ly biệt♪
Dialogue: 0,0:20:43.84,0:20:50.14,Default,,0,0,0,,♪Muôn vàn cảm xúc nảy sinh nơi cõi lòng♪
Dialogue: 0,0:21:10.88,0:21:12.40,Default,,0,0,0,,Tô Tô, mau rời khỏi đây.
Dialogue: 0,0:21:12.68,0:21:13.92,Default,,0,0,0,,Đàm Đài Tẫn đã sa đọa thành ma rồi.
Dialogue: 0,0:21:13.92,0:21:15.24,Default,,0,0,0,,Hắn đã giết Triệu Du sư bá.
Dialogue: 0,0:21:18.45,0:21:22.27,Default,,0,0,0,,♪Trăng mờ che đôi mắt♪
Dialogue: 0,0:21:23.48,0:21:24.27,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:21:25.31,0:21:26.55,Default,,0,0,0,,Không phải chàng làm,
Dialogue: 0,0:21:27.11,0:21:27.92,Default,,0,0,0,,đúng không?
Dialogue: 0,0:21:28.72,0:21:29.64,Default,,0,0,0,,Cô sai rồi,
Dialogue: 0,0:21:30.55,0:21:31.68,Default,,0,0,0,,là ta làm đấy.
Dialogue: 0,0:21:34.00,0:21:35.96,Default,,0,0,0,,Ta vốn là Ma Thần.
Dialogue: 0,0:21:37.95,0:21:42.18,Default,,0,0,0,,♪Muốn vèn màn đêm dài vô tận♪
Dialogue: 0,0:21:42.18,0:21:49.05,Default,,0,0,0,,♪Như tác thành, chẳng sợ thiêu đốt bản thân\Nnhư lửa cháy, chớp tắt như làn khói♪
Dialogue: 0,0:21:49.05,0:21:54.40,Default,,0,0,0,,♪Một ý niệm, nhớ lời ước hẹn\Ntrong giấc mộng hồng trần xưa♪
Dialogue: 0,0:21:54.40,0:21:59.21,Default,,0,0,0,,♪Tình sâu mà duyên mỏng,\Nhàng mày nhíu chặt♪
Dialogue: 0,0:21:59.21,0:22:04.83,Default,,0,0,0,,♪Số phận sắp đặt,\Nnếu chẳng ai tránh được duyên tơ hồng♪
Dialogue: 0,0:22:06.59,0:22:07.59,Default,,0,0,0,,Lê Tô Tô,
Dialogue: 0,0:22:07.92,0:22:09.27,Default,,0,0,0,,cô quá ngu ngốc.
Dialogue: 0,0:22:09.62,0:22:13.94,Default,,0,0,0,,♪Ánh mắt ấy♪
Dialogue: 0,0:22:29.79,0:22:30.88,Default,,0,0,0,,Nếu không phải tại cô,
Dialogue: 0,0:22:31.27,0:22:33.24,Default,,0,0,0,,ta đã thành ma từ lâu.
Dialogue: 0,0:22:33.44,0:22:34.59,Default,,0,0,0,,Nếu không phải tại Triệu Du,
Dialogue: 0,0:22:35.03,0:22:37.16,Default,,0,0,0,,ta đã về Ma Vực lâu rồi.
Dialogue: 0,0:22:38.40,0:22:40.16,Default,,0,0,0,,Ta không hiểu chàng đang nói gì.
Dialogue: 0,0:22:40.83,0:22:42.20,Default,,0,0,0,,Chàng là Đàm Đài Tẫn
Dialogue: 0,0:22:44.24,0:22:45.40,Default,,0,0,0,,hay là Ma Thần?
Dialogue: 0,0:22:55.68,0:22:56.51,Default,,0,0,0,,Được.
Dialogue: 0,0:22:57.44,0:22:59.96,Default,,0,0,0,,Vậy ta sẽ nói rõ mọi chuyện cho cô biết.
Dialogue: 0,0:23:00.44,0:23:02.00,Default,,0,0,0,,Mọi chuyện dây dưa giữa chúng ta
Dialogue: 0,0:23:02.92,0:23:04.51,Default,,0,0,0,,đều như thứ này.
Dialogue: 0,0:23:29.96,0:23:32.83,Default,,0,0,0,,Bây giờ tất cả những gì cô làm
Dialogue: 0,0:23:34.44,0:23:35.88,Default,,0,0,0,,đều công cốc cả rồi.
Dialogue: 0,0:23:37.88,0:23:39.00,Default,,0,0,0,,Vui không?
Dialogue: 0,0:23:51.79,0:23:53.00,Default,,0,0,0,,Càn khôn mượn phép.
Dialogue: 0,0:23:53.00,0:23:53.59,Default,,0,0,0,,Rút.
Dialogue: 0,0:24:13.00,0:24:13.72,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:24:13.72,0:24:15.24,Default,,0,0,0,,Đàm Đài Tẫn bản tính khó dời,
Dialogue: 0,0:24:15.24,0:24:16.68,Default,,0,0,0,,vừa nãy hắn chủ động nuốt chửng Đế Miện,
Dialogue: 0,0:24:16.68,0:24:17.64,Default,,0,0,0,,muội cũng thấy cả rồi.
Dialogue: 0,0:24:17.64,0:24:18.48,Default,,0,0,0,,Trước đó,
Dialogue: 0,0:24:18.48,0:24:19.55,Default,,0,0,0,,hắn còn giết hại Triệu Du sư bá
Dialogue: 0,0:24:19.55,0:24:20.79,Default,,0,0,0,,trước mặt tất cả mọi người.
Dialogue: 0,0:24:20.79,0:24:21.92,Default,,0,0,0,,Hắn mang tội ác tày trời,
Dialogue: 0,0:24:22.03,0:24:24.03,Default,,0,0,0,,muội không thể ôm hy vọng vào hắn.
Dialogue: 0,0:24:29.68,0:24:31.07,Default,,0,0,0,,Thương Cửu Mân,
Dialogue: 0,0:24:31.27,0:24:32.35,Default,,0,0,0,,tên súc sinh này.
Dialogue: 0,0:24:32.64,0:24:34.48,Default,,0,0,0,,Ngươi đã làm gì vậy hả Thương Cửu Mân?
Dialogue: 0,0:24:34.48,0:24:36.68,Default,,0,0,0,,Tên lòng lang dạ sói nhà ngươi có còn nhớ
Dialogue: 0,0:24:36.68,0:24:39.24,Default,,0,0,0,,nếu năm xưa không nhờ\Nsư phụ đưa ngươi về Tiêu Dao Tông,
Dialogue: 0,0:24:39.24,0:24:40.59,Default,,0,0,0,,ngươi đã chết ở bên ngoài,
Dialogue: 0,0:24:40.59,0:24:42.20,Default,,0,0,0,,biến thành vũng bùn nhão từ lâu rồi không?
Dialogue: 0,0:24:42.64,0:24:43.92,Default,,0,0,0,,Sao ngươi có thể…
Dialogue: 0,0:24:44.11,0:24:44.88,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:24:45.48,0:24:46.40,Default,,0,0,0,,sao ngươi lại làm vậy?
Dialogue: 0,0:24:47.07,0:24:48.96,Default,,0,0,0,,Triệu Du sư bá nào đã bạc đãi ngươi?
Dialogue: 0,0:24:49.59,0:24:50.68,Default,,0,0,0,,Không tại sao cả.
Dialogue: 0,0:24:51.64,0:24:53.44,Default,,0,0,0,,Vốn dĩ trời sinh ta nên như vậy.
Dialogue: 0,0:24:56.11,0:24:56.83,Default,,0,0,0,,Còn ngươi,
Dialogue: 0,0:24:57.07,0:24:59.11,Default,,0,0,0,,năm trăm năm trước\Nta đã giết ngươi một lần,
Dialogue: 0,0:24:59.35,0:25:02.59,Default,,0,0,0,,bây giờ ta cũng có thể giết thêm lần nữa.
Dialogue: 0,0:25:15.44,0:25:17.51,Default,,0,0,0,,- Sư phụ.\N- Sư phụ…
Dialogue: 0,0:25:18.51,0:25:21.07,Default,,0,0,0,,- Sư phụ.\N- Sư phụ…
Dialogue: 0,0:25:22.07,0:25:23.51,Default,,0,0,0,,Muội nhất định không thể tin hắn.
Dialogue: 0,0:25:24.40,0:25:25.40,Default,,0,0,0,,[Đàm Đài Tẫn,]
Dialogue: 0,0:25:26.00,0:25:27.92,Default,,0,0,0,,[rốt cuộc có chuyện gì vậy?]
Dialogue: 0,0:25:33.75,0:25:35.92,Default,,0,0,0,,[Tạm biệt, Lê Tô Tô.]
Dialogue: 0,0:25:39.35,0:25:40.92,Default,,0,0,0,,[Bây giờ trong Ma Cung này]
Dialogue: 0,0:25:41.44,0:25:42.64,Default,,0,0,0,,[không còn ai khác.]
Dialogue: 0,0:25:46.35,0:25:48.07,Default,,0,0,0,,[Các người đều muốn ta chết.]
Dialogue: 0,0:25:50.68,0:25:51.40,Default,,0,0,0,,Cửu Mân,
Dialogue: 0,0:25:51.55,0:25:52.16,Default,,0,0,0,,đi.
Dialogue: 0,0:25:57.03,0:25:57.75,Default,,0,0,0,,Cửu Mân.
Dialogue: 0,0:25:58.92,0:25:59.68,Default,,0,0,0,,Sư phụ.
Dialogue: 0,0:26:01.27,0:26:02.27,Default,,0,0,0,,Người lại cứu con rồi.
Dialogue: 0,0:26:03.16,0:26:04.20,Default,,0,0,0,,Đồ nhi ngốc,
Dialogue: 0,0:26:04.83,0:26:07.20,Default,,0,0,0,,con phải biết rằng\Nta là sư phụ của con mà.
Dialogue: 0,0:26:07.75,0:26:08.48,Default,,0,0,0,,Sư phụ,
Dialogue: 0,0:26:08.48,0:26:10.40,Default,,0,0,0,,sao chúng ta lại về Tiêu Dao Tông vậy?
Dialogue: 0,0:26:11.03,0:26:13.07,Default,,0,0,0,,Sư phụ đã dùng Tiêu Dao Kiếm Ý
Dialogue: 0,0:26:13.07,0:26:14.20,Default,,0,0,0,,tạo một kết giới ở đây.
Dialogue: 0,0:26:14.68,0:26:16.07,Default,,0,0,0,,Chỉ cần sư phụ vẫn còn sống,
Dialogue: 0,0:26:16.48,0:26:18.59,Default,,0,0,0,,kết giới này sẽ có thể bảo vệ con.
Dialogue: 0,0:26:20.16,0:26:21.31,Default,,0,0,0,,Họ vẫn cho rằng
Dialogue: 0,0:26:21.64,0:26:23.27,Default,,0,0,0,,là con đã trộm tà cốt ư?
Dialogue: 0,0:26:23.35,0:26:24.00,Default,,0,0,0,,Phải.
Dialogue: 0,0:26:25.16,0:26:26.79,Default,,0,0,0,,Vậy sư phụ vẫn tin con chứ?
Dialogue: 0,0:26:26.79,0:26:28.11,Default,,0,0,0,,Đương nhiên sư phụ tin con rồi.
Dialogue: 0,0:26:29.00,0:26:30.96,Default,,0,0,0,,Bây giờ dù bất cứ ai trên đời\Nthèm muốn tà cốt,
Dialogue: 0,0:26:31.16,0:26:32.16,Default,,0,0,0,,thì cũng không phải là con.
Dialogue: 0,0:26:33.00,0:26:34.92,Default,,0,0,0,,Là Đế Miện, tà cốt ở chỗ ông ta.
Dialogue: 0,0:26:35.55,0:26:36.27,Default,,0,0,0,,Cửu Mân,
Dialogue: 0,0:26:36.44,0:26:37.27,Default,,0,0,0,,hứa với sư phụ,
Dialogue: 0,0:26:38.24,0:26:41.16,Default,,0,0,0,,phải sống thật tốt.
Dialogue: 0,0:26:42.27,0:26:42.88,Default,,0,0,0,,Sư phụ.
Dialogue: 0,0:26:45.79,0:26:46.51,Default,,0,0,0,,Sư phụ.
Dialogue: 0,0:26:47.27,0:26:48.03,Default,,0,0,0,,Đừng đi.
Dialogue: 0,0:26:52.79,0:26:53.96,Default,,0,0,0,,Đừng đi một mình.
Dialogue: 0,0:26:54.83,0:26:56.16,Default,,0,0,0,,Nhớ lời sư phụ,
Dialogue: 0,0:26:56.79,0:26:57.79,Default,,0,0,0,,hãy sống thật tốt.
Dialogue: 0,0:26:58.20,0:26:58.83,Default,,0,0,0,,Sư phụ.
Dialogue: 0,0:26:59.55,0:27:00.27,Default,,0,0,0,,Sư phụ.
Dialogue: 0,0:27:01.68,0:27:02.27,Default,,0,0,0,,Người…
Dialogue: 0,0:27:02.51,0:27:03.24,Default,,0,0,0,,Cửu Mân,
Dialogue: 0,0:27:03.51,0:27:05.59,Default,,0,0,0,,thời gian của sư phụ không còn nhiều nữa.
Dialogue: 0,0:27:07.83,0:27:09.55,Default,,0,0,0,,Đế Miện đã thành Ma Thần,
Dialogue: 0,0:27:10.07,0:27:11.59,Default,,0,0,0,,đạo Đồng Bi đã được mở ra.
Dialogue: 0,0:27:12.35,0:27:14.07,Default,,0,0,0,,Đến khi khí đục phủ khắp đất trời,
Dialogue: 0,0:27:16.00,0:27:16.92,Default,,0,0,0,,sinh linh tam giới
Dialogue: 0,0:27:18.31,0:27:19.88,Default,,0,0,0,,sẽ phải chịu cảnh lầm than.
Dialogue: 0,0:27:21.92,0:27:22.72,Default,,0,0,0,,Sao lại như vậy?
Dialogue: 0,0:27:23.83,0:27:24.59,Default,,0,0,0,,Tại sao?
Dialogue: 0,0:27:25.64,0:27:28.03,Default,,0,0,0,,Mọi trận pháp đều có\Ntương sinh tương khắc.
Dialogue: 0,0:27:29.20,0:27:31.03,Default,,0,0,0,,Đạo Đồng Bi không thể\Ncó mở đầu mà không có kết thúc.
Dialogue: 0,0:27:31.03,0:27:33.24,Default,,0,0,0,,Có thể chấm dứt đạo Đồng Bi.
Dialogue: 0,0:27:33.44,0:27:34.31,Default,,0,0,0,,Nhưng chỉ có
Dialogue: 0,0:27:35.75,0:27:37.59,Default,,0,0,0,,Ma Thần mới có thể làm được.
Dialogue: 0,0:27:40.24,0:27:41.07,Default,,0,0,0,,Ma Thần.
Dialogue: 0,0:27:43.27,0:27:44.48,Default,,0,0,0,,Ma Thần còn
Dialogue: 0,0:27:45.64,0:27:47.16,Default,,0,0,0,,thì đạo Đồng Bi còn.
Dialogue: 0,0:27:48.24,0:27:49.59,Default,,0,0,0,,Ma Thần chết
Dialogue: 0,0:27:50.44,0:27:52.40,Default,,0,0,0,,thì đạo Đồng Bi mất.
Dialogue: 0,0:27:54.59,0:27:55.40,Default,,0,0,0,,Cửu Mân,
Dialogue: 0,0:27:55.79,0:27:57.40,Default,,0,0,0,,con biết tại sao sư phụ
Dialogue: 0,0:27:57.40,0:27:59.00,Default,,0,0,0,,lại đặt cái tên này cho con không?
Dialogue: 0,0:28:03.03,0:28:04.20,Default,,0,0,0,,Thì ra là vậy.
Dialogue: 0,0:28:05.07,0:28:07.72,Default,,0,0,0,,Khi sư phụ nhặt được con\Nbên bờ Nhược Thủy,
Dialogue: 0,0:28:08.44,0:28:10.51,Default,,0,0,0,,đã biết con sinh ra không được may mắn,
Dialogue: 0,0:28:10.72,0:28:12.11,Default,,0,0,0,,có số cô đơn khổ sở.
Dialogue: 0,0:28:15.07,0:28:15.96,Default,,0,0,0,,Thì ra
Dialogue: 0,0:28:16.96,0:28:18.00,Default,,0,0,0,,khi ấy
Dialogue: 0,0:28:19.27,0:28:21.51,Default,,0,0,0,,người đã biết con là tai ương
Dialogue: 0,0:28:22.35,0:28:23.72,Default,,0,0,0,,lớn nhất trên đời này.
Dialogue: 0,0:28:33.44,0:28:34.59,Default,,0,0,0,,Nhưng Cửu Mân à,
Dialogue: 0,0:28:35.59,0:28:36.72,Default,,0,0,0,,con phải biết
Dialogue: 0,0:28:37.88,0:28:39.64,Default,,0,0,0,,không có bất cứ ai
Dialogue: 0,0:28:40.40,0:28:43.07,Default,,0,0,0,,phải mãi mãi sống trong bóng tối.
Dialogue: 0,0:28:46.20,0:28:47.27,Default,,0,0,0,,[Rõ ràng người biết]
Dialogue: 0,0:28:47.83,0:28:49.20,Default,,0,0,0,,[con chính là ma thai]
Dialogue: 0,0:28:49.92,0:28:51.07,Default,,0,0,0,,[nhưng vẫn sẵn lòng cho con]
Dialogue: 0,0:28:51.07,0:28:52.83,Default,,0,0,0,,[cơ hội được chọn lại từ đầu.]
Dialogue: 0,0:28:55.55,0:28:56.48,Default,,0,0,0,,Cửu Mân,
Dialogue: 0,0:28:56.48,0:28:57.68,Default,,0,0,0,,đỡ ta dậy.
Dialogue: 0,0:28:57.96,0:29:01.11,Default,,0,0,0,,Ta muốn ngắm Tiêu Dao Tông\Ncủa chúng ta lần nữa.
Dialogue: 0,0:29:02.27,0:29:02.88,Default,,0,0,0,,Sư phụ.
Dialogue: 0,0:29:03.59,0:29:04.20,Default,,0,0,0,,Sư phụ.
Dialogue: 0,0:29:04.83,0:29:07.00,Default,,0,0,0,,Ta đã bị khí tức của đạo Đồng Bi xâm nhập.
Dialogue: 0,0:29:09.31,0:29:10.72,Default,,0,0,0,,Dù là sinh linh nào,
Dialogue: 0,0:29:11.27,0:29:13.00,Default,,0,0,0,,chỉ cần bị đạo Đồng Bi xâm nhập,
Dialogue: 0,0:29:13.11,0:29:14.55,Default,,0,0,0,,buông lỏng ý chí một chút
Dialogue: 0,0:29:14.92,0:29:16.44,Default,,0,0,0,,là chắc chắn sẽ nhập ma.
Dialogue: 0,0:29:18.48,0:29:19.11,Default,,0,0,0,,Cửu Mân,
Dialogue: 0,0:29:19.31,0:29:21.11,Default,,0,0,0,,con giúp sư phụ thêm một việc nữa.
Dialogue: 0,0:29:21.83,0:29:23.07,Default,,0,0,0,,Giết ta đi.
Dialogue: 0,0:29:24.07,0:29:26.75,Default,,0,0,0,,Đừng để sư phụ biến thành\Nthi hài loài yêu ma.
Dialogue: 0,0:29:28.27,0:29:29.88,Default,,0,0,0,,Sư phụ, người đừng nói nữa.
Dialogue: 0,0:29:30.44,0:29:31.59,Default,,0,0,0,,Con đưa người về chữa trị.
Dialogue: 0,0:29:32.40,0:29:33.16,Default,,0,0,0,,Chúng ta đi luôn.
Dialogue: 0,0:29:34.20,0:29:34.79,Default,,0,0,0,,Sư phụ.
Dialogue: 0,0:29:38.55,0:29:40.92,Default,,0,0,0,,Cửu Mân, mau giết ta đi.
Dialogue: 0,0:29:40.92,0:29:41.59,Default,,0,0,0,,Sư phụ.
Dialogue: 0,0:29:45.59,0:29:48.20,Default,,0,0,0,,Cửu Mân, ta sắp thành ma rồi.
Dialogue: 0,0:29:48.20,0:29:50.48,Default,,0,0,0,,Cửu Mân, vũ khí sắc bén có thể giết người,
Dialogue: 0,0:29:50.48,0:29:51.44,Default,,0,0,0,,cũng có thể cứu người.
Dialogue: 0,0:29:51.83,0:29:54.27,Default,,0,0,0,,Phải xem người dùng nó lương thiện
Dialogue: 0,0:29:54.79,0:29:55.96,Default,,0,0,0,,hay tàn ác.
Dialogue: 0,0:30:01.35,0:30:02.83,Default,,0,0,0,,Sư phụ, con không làm được.
Dialogue: 0,0:30:03.48,0:30:05.79,Default,,0,0,0,,Cửu Mân, mau ra tay đi.
Dialogue: 0,0:30:05.79,0:30:07.24,Default,,0,0,0,,Con không ra tay được.
Dialogue: 0,0:30:07.51,0:30:10.92,Default,,0,0,0,,Không thì không kịp nữa đâu.
Dialogue: 0,0:30:10.92,0:30:13.35,Default,,0,0,0,,Sư phụ, đừng ép con.
Dialogue: 0,0:30:17.55,0:30:19.40,Default,,0,0,0,,Giết ta, cứu những người khác.
Dialogue: 0,0:30:19.51,0:30:21.00,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:30:21.31,0:30:22.72,Default,,0,0,0,,ra tay đi.
Dialogue: 0,0:30:23.20,0:30:26.11,Default,,0,0,0,,Giết ta đi.
Dialogue: 0,0:30:27.31,0:30:28.20,Default,,0,0,0,,Sư phụ.
Dialogue: 0,0:30:29.79,0:30:32.92,Default,,0,0,0,,Giết ta đi.
Dialogue: 0,0:30:54.31,0:30:55.11,Default,,0,0,0,,[Cửu Mân,]
Dialogue: 0,0:30:55.88,0:30:57.03,Default,,0,0,0,,[là ma thai]
Dialogue: 0,0:30:57.51,0:30:58.72,Default,,0,0,0,,[không phải lỗi của con.]
Dialogue: 0,0:30:59.68,0:31:01.75,Default,,0,0,0,,[Ai cũng nên có quyền lựa chọn.]
Dialogue: 0,0:31:02.68,0:31:03.51,Default,,0,0,0,,[Nhưng]
Dialogue: 0,0:31:04.11,0:31:05.51,Default,,0,0,0,,[đạo Đồng Bi đã được mở ra,]
Dialogue: 0,0:31:06.31,0:31:07.59,Default,,0,0,0,,[ngoài Ma Thần]
Dialogue: 0,0:31:08.20,0:31:09.64,Default,,0,0,0,,[thì trong tam giới]
Dialogue: 0,0:31:10.35,0:31:12.07,Default,,0,0,0,,[chẳng ai có thể đóng nó lại.]
Dialogue: 0,0:31:14.07,0:31:16.20,Default,,0,0,0,,[Đệ tử Tiên Môn Thương Cửu Mân]
Dialogue: 0,0:31:16.92,0:31:18.75,Default,,0,0,0,,[đã không thể cứu chúng sinh,]
Dialogue: 0,0:31:19.75,0:31:22.11,Default,,0,0,0,,[nhưng Ma Thần Đàm Đài Tẫn thì có thể.]
Dialogue: 0,0:31:25.40,0:31:26.20,Default,,0,0,0,,[Cửu Mân,]
Dialogue: 0,0:31:27.24,0:31:28.75,Default,,0,0,0,,[đạo Đồng Bi gắn liền]
Dialogue: 0,0:31:28.92,0:31:30.07,Default,,0,0,0,,[với con,]
Dialogue: 0,0:31:31.11,0:31:32.59,Default,,0,0,0,,[với Ma Thần,]
Dialogue: 0,0:31:33.40,0:31:35.35,Default,,0,0,0,,[cả ba cùng sống, cũng cùng chết.]
Dialogue: 0,0:31:35.72,0:31:37.92,Default,,0,0,0,,[Vi sư biết\Nnhư vậy là không công bằng với con]
Dialogue: 0,0:31:38.51,0:31:41.72,Default,,0,0,0,,[nhưng đây là cơ hội duy nhất để thay đổi\Nviệc Ma Thần hủy diệt thế gian.]
Dialogue: 0,0:31:42.03,0:31:42.83,Default,,0,0,0,,[Sư phụ,]
Dialogue: 0,0:31:43.48,0:31:44.55,Default,,0,0,0,,[con hiểu rồi.]
Dialogue: 0,0:31:46.44,0:31:47.27,Default,,0,0,0,,[Nếu]
Dialogue: 0,0:31:48.11,0:31:49.64,Default,,0,0,0,,[đây là con đường duy nhất]
Dialogue: 0,0:31:51.27,0:31:52.88,Default,,0,0,0,,[thì con sẽ đi tiếp.]
Dialogue: 0,0:31:54.11,0:31:55.83,Default,,0,0,0,,[Dù sẽ bộ dạng con thay đổi ra sao]
Dialogue: 0,0:31:58.20,0:31:59.92,Default,,0,0,0,,[thì con mãi mãi là Đàm Đài Tẫn,]
Dialogue: 0,0:32:01.40,0:32:02.83,Default,,0,0,0,,[cũng là Thương Cửu Mân.]
Dialogue: 0,0:32:03.24,0:32:04.51,Default,,0,0,0,,Sư phụ…
Dialogue: 0,0:32:06.92,0:32:08.27,Default,,0,0,0,,Thương Cửu Mân,
Dialogue: 0,0:32:08.83,0:32:10.11,Default,,0,0,0,,tên súc sinh nhà ngươi.
Dialogue: 0,0:32:10.27,0:32:11.07,Default,,0,0,0,,Đúng,
Dialogue: 0,0:32:11.64,0:32:13.68,Default,,0,0,0,,ta đã chính tay kết liễu ông ấy.
Dialogue: 0,0:32:16.03,0:32:16.83,Default,,0,0,0,,Giờ đây
Dialogue: 0,0:32:19.48,0:32:21.92,Default,,0,0,0,,chỉ còn ta và ngươi đọ sức.
Dialogue: 0,0:32:25.40,0:32:26.11,Default,,0,0,0,,Ta
Dialogue: 0,0:32:28.79,0:32:30.75,Default,,0,0,0,,sẽ mang tất cả đi.
Dialogue: 0,0:32:35.69,0:32:38.45,Default,,0,0,0,,♪Dù chỉ có một tia hy vọng♪
Dialogue: 0,0:32:38.45,0:32:41.15,Default,,0,0,0,,♪Dù chỉ có một tia sáng♪
Dialogue: 0,0:32:41.58,0:32:47.65,Default,,0,0,0,,♪Chưa bao giờ lãng quên cơn gió mạnh♪
Dialogue: 0,0:33:00.55,0:33:03.07,Default,,0,0,0,,[Mạt Nữ, nàng đang nói gì vậy,]
Dialogue: 0,0:33:03.48,0:33:04.48,Default,,0,0,0,,[sao ta không hiểu?]
Dialogue: 0,0:33:04.96,0:33:06.40,Default,,0,0,0,,[Ta vốn là yêu ma,]
Dialogue: 0,0:33:06.68,0:33:08.24,Default,,0,0,0,,dĩ nhiên có thể thỏa sức tung hoành,
Dialogue: 0,0:33:08.96,0:33:10.83,Default,,0,0,0,,đến Ma Vực cũng chẳng có gì là lạ.
Dialogue: 0,0:33:10.83,0:33:12.68,Default,,0,0,0,,Không, không thể nào.
Dialogue: 0,0:33:13.24,0:33:14.20,Default,,0,0,0,,Sao lại có thể như vậy.
Dialogue: 0,0:33:14.20,0:33:14.72,Default,,0,0,0,,Sao nàng lại là…
Dialogue: 0,0:33:14.72,0:33:15.79,Default,,0,0,0,,Công Dã tiên quân,
Dialogue: 0,0:33:16.72,0:33:18.20,Default,,0,0,0,,huynh nghe ta kể một câu chuyện đi.
Dialogue: 0,0:33:19.79,0:33:23.55,Default,,0,0,0,,Năm trăm năm trước,\Nđể khôi phục nguyên thần,
Dialogue: 0,0:33:24.64,0:33:26.20,Default,,0,0,0,,Nữ Bạt đã đến nhân gian để lịch kiếp,
Dialogue: 0,0:33:26.44,0:33:29.31,Default,,0,0,0,,cô ấy đã trở thành trưởng nữ\Ncủa phủ đại tướng quân tại một đất nước,
Dialogue: 0,0:33:30.00,0:33:32.35,Default,,0,0,0,,cô ấy tên là Diệp Băng Thường.
Dialogue: 0,0:33:34.48,0:33:35.35,Default,,0,0,0,,[Về sau,]
Dialogue: 0,0:33:36.20,0:33:37.48,Default,,0,0,0,,[cô ấy được gả cho]
Dialogue: 0,0:33:38.20,0:33:40.35,Default,,0,0,0,,[người cũng có tình cảm với cô,\NTuyên Thành vương]
Dialogue: 0,0:33:41.35,0:33:42.16,Default,,0,0,0,,[Tiêu Lẫm.]
Dialogue: 0,0:33:43.96,0:33:44.75,Default,,0,0,0,,Tiêu Lẫm.
Dialogue: 0,0:33:46.03,0:33:47.59,Default,,0,0,0,,Nhưng ngày tháng tươi đẹp\Nchẳng thể kéo dài,
Dialogue: 0,0:33:48.59,0:33:49.68,Default,,0,0,0,,Diệp Băng Thường
Dialogue: 0,0:33:50.59,0:33:51.79,Default,,0,0,0,,đã phản bội Tiêu Lẫm,
Dialogue: 0,0:33:52.83,0:33:54.27,Default,,0,0,0,,còn hại chết người đó.
Dialogue: 0,0:33:56.00,0:33:57.20,Default,,0,0,0,,Nhưng Tiêu Lẫm
Dialogue: 0,0:33:58.59,0:33:59.96,Default,,0,0,0,,lại vẫn yêu cô ấy,
Dialogue: 0,0:34:00.72,0:34:01.72,Default,,0,0,0,,[bao dung cô ấy,]
Dialogue: 0,0:34:02.55,0:34:03.64,Default,,0,0,0,,[bảo vệ cô ấy,]
Dialogue: 0,0:34:06.88,0:34:09.15,Default,,0,0,0,,[đến tận\Nkhoảnh khắc cuối cùng của người ấy.]
Dialogue: 0,0:34:10.96,0:34:13.23,Default,,0,0,0,,[Diệp Băng Thường\Nđến chết vẫn hối hận không thôi.]
Dialogue: 0,0:34:13.67,0:34:14.96,Default,,0,0,0,,Nỗi hối hận này
Dialogue: 0,0:34:15.71,0:34:18.80,Default,,0,0,0,,cũng được Nữ Bạt khắc ghi vào lòng.
Dialogue: 0,0:34:20.00,0:34:20.96,Default,,0,0,0,,Sau đó thì sao?
Dialogue: 0,0:34:22.96,0:34:24.71,Default,,0,0,0,,Sau đó Nữ Bạt tỉnh lại,
Dialogue: 0,0:34:25.63,0:34:27.80,Default,,0,0,0,,vẫn lưu luyến cuộc sống của nhân gian
Dialogue: 0,0:34:29.19,0:34:30.84,Default,,0,0,0,,[nên đã quay lại nhân gian]
Dialogue: 0,0:34:31.67,0:34:33.28,Default,,0,0,0,,[mở một phường thêu.]
Dialogue: 0,0:34:36.36,0:34:37.36,Default,,0,0,0,,[Nhưng]
Dialogue: 0,0:34:38.88,0:34:40.48,Default,,0,0,0,,[số phận lại trêu người…]
Dialogue: 0,0:34:45.07,0:34:47.23,Default,,0,0,0,,Và rồi cô ấy đã gặp được
Dialogue: 0,0:34:47.23,0:34:49.48,Default,,0,0,0,,một tên ngốc\Ncó bề ngoài giống hệt Tiêu Lẫm,
Dialogue: 0,0:34:57.15,0:34:58.84,Default,,0,0,0,,[quyết định lừa gạt tên ngốc này\Nđể chơi đùa,]
Dialogue: 0,0:35:00.00,0:35:00.84,Default,,0,0,0,,đúng chứ?
Dialogue: 0,0:35:02.40,0:35:03.48,Default,,0,0,0,,Ta cho rằng
Dialogue: 0,0:35:04.28,0:35:05.76,Default,,0,0,0,,[có thể bù đắp]
Dialogue: 0,0:35:06.40,0:35:08.15,Default,,0,0,0,,[sự tiếc nuối của Tiêu Lẫm qua huynh.]
Dialogue: 0,0:35:09.40,0:35:10.76,Default,,0,0,0,,Nhưng Công Dã Tịch Vô à,
Dialogue: 0,0:35:12.48,0:35:15.00,Default,,0,0,0,,ta phải cảm ơn huynh đã giúp ta hiểu rằng
Dialogue: 0,0:35:17.00,0:35:19.00,Default,,0,0,0,,Tiêu Lẫm chẳng thể quay lại nữa.
Dialogue: 0,0:35:28.76,0:35:29.76,Default,,0,0,0,,Trước kia,
Dialogue: 0,0:35:30.76,0:35:32.59,Default,,0,0,0,,điều ta ghét nhất là\Nbị người khác lừa gạt,
Dialogue: 0,0:35:33.36,0:35:35.07,Default,,0,0,0,,nhưng vừa rồi, có một khoảnh khắc
Dialogue: 0,0:35:35.59,0:35:37.15,Default,,0,0,0,,ta thà rằng nàng lừa ta,
Dialogue: 0,0:35:38.03,0:35:39.88,Default,,0,0,0,,dù nàng lừa ta cả đời cũng được.
Dialogue: 0,0:35:40.80,0:35:42.44,Default,,0,0,0,,Tại sao nàng không tiếp tục lừa ta?
Dialogue: 0,0:35:46.03,0:35:47.19,Default,,0,0,0,,Công Dã Tịch Vô,
Dialogue: 0,0:35:47.80,0:35:48.96,Default,,0,0,0,,huynh rất giống
Dialogue: 0,0:35:49.55,0:35:50.44,Default,,0,0,0,,Tiêu Lẫm.
Dialogue: 0,0:35:51.63,0:35:52.51,Default,,0,0,0,,Rất giống.
Dialogue: 0,0:35:54.00,0:35:57.03,Default,,0,0,0,,Huynh cũng như chàng,\Ncũng là một người rất tốt.
Dialogue: 0,0:35:58.48,0:35:59.48,Default,,0,0,0,,Tiếc rằng
Dialogue: 0,0:36:00.67,0:36:02.55,Default,,0,0,0,,đến cùng thì huynh cũng không phải chàng.
Dialogue: 0,0:36:27.59,0:36:29.36,Default,,0,0,0,,[Ta đã thử nhiều cách,]
Dialogue: 0,0:36:30.23,0:36:32.28,Default,,0,0,0,,[vẫn chẳng thể đóng đạo Đồng Bi.]
Dialogue: 0,0:36:35.48,0:36:37.48,Default,,0,0,0,,[Giờ đây, đạo Đồng Bi ngày một mở rộng,]
Dialogue: 0,0:36:39.00,0:36:40.59,Default,,0,0,0,,[thời gian còn lại của ta\Nkhông còn nhiều nữa.]
Dialogue: 0,0:36:42.44,0:36:43.36,Default,,0,0,0,,[Đàm Đài Tẫn,]
Dialogue: 0,0:36:44.32,0:36:46.55,Default,,0,0,0,,[ngươi phải nhanh chóng\Nnghĩ cách giải quyết mới được.]
Dialogue: 0,0:36:51.80,0:36:53.07,Default,,0,0,0,,[Trong Bát Nhã Phù Sinh,]
Dialogue: 0,0:36:53.67,0:36:56.40,Default,,0,0,0,,[Ma Thần dùng ba vũ khí Ma tộc\Nđể duy trì đạo Đồng Bi]
Dialogue: 0,0:36:56.80,0:36:58.40,Default,,0,0,0,,[nên tà cốt mới có thể được rút ra.]
Dialogue: 0,0:37:03.48,0:37:05.51,Default,,0,0,0,,[Nếu ta thu thập ba vũ khí Ma tộc]
Dialogue: 0,0:37:06.19,0:37:08.23,Default,,0,0,0,,[thì sẽ có thể bắt chước\Ntình huống năm xưa,]
Dialogue: 0,0:37:09.55,0:37:10.92,Default,,0,0,0,,[rút tà cốt ra.]
Dialogue: 0,0:37:12.80,0:37:14.23,Default,,0,0,0,,[Nếu mọi thứ thuận lợi]
Dialogue: 0,0:37:15.00,0:37:16.63,Default,,0,0,0,,[thì ta cũng như Ma Thần khi ấy,]
Dialogue: 0,0:37:17.15,0:37:18.55,Default,,0,0,0,,[có thể bị giết chết.]
Dialogue: 0,0:37:20.63,0:37:23.76,Default,,0,0,0,,[Nếu đạo Đồng Bi\Ncùng sống cùng chết với ta]
Dialogue: 0,0:37:24.55,0:37:26.07,Default,,0,0,0,,[thì khi ta chết đi,]
Dialogue: 0,0:37:27.00,0:37:29.23,Default,,0,0,0,,[đạo Đồng Bi cũng có thể chấm dứt.]
Dialogue: 0,0:37:54.55,0:37:55.63,Default,,0,0,0,,Đa tạ Ma Thần
Dialogue: 0,0:37:56.40,0:37:57.80,Default,,0,0,0,,đã trả thù cho Tự Anh.
Dialogue: 0,0:38:01.63,0:38:03.03,Default,,0,0,0,,Diệp Băng Thường?
Dialogue: 0,0:38:09.03,0:38:10.28,Default,,0,0,0,,Thì ra là vậy.
Dialogue: 0,0:38:12.84,0:38:14.88,Default,,0,0,0,,Quanh đi quẩn lại suốt 500 năm,
Dialogue: 0,0:38:15.00,0:38:15.88,Default,,0,0,0,,đến cuối cùng
Dialogue: 0,0:38:16.96,0:38:19.67,Default,,0,0,0,,quả nhiên\Nchẳng ai có thể thoát được số phận.
Dialogue: 0,0:38:21.07,0:38:23.71,Default,,0,0,0,,Ta vốn cho rằng mất đi Tiêu Lẫm,
Dialogue: 0,0:38:24.07,0:38:25.32,Default,,0,0,0,,đánh mất tính mạng
Dialogue: 0,0:38:26.11,0:38:29.00,Default,,0,0,0,,rồi lại có thêm\Nmột muội muội thân thiết với ta,
Dialogue: 0,0:38:29.51,0:38:30.51,Default,,0,0,0,,yêu thương ta
Dialogue: 0,0:38:31.15,0:38:32.96,Default,,0,0,0,,là ông trời rủ lòng thương ta.
Dialogue: 0,0:38:34.11,0:38:35.32,Default,,0,0,0,,Không ngờ thứ người mang đến cho ta
Dialogue: 0,0:38:35.96,0:38:37.76,Default,,0,0,0,,lại là để ta mất đi một lần nữa.
Dialogue: 0,0:38:43.51,0:38:44.96,Default,,0,0,0,,Tại sao cô lại đến gặp ta?
Dialogue: 0,0:38:47.32,0:38:48.48,Default,,0,0,0,,Vạn năm trước,
Dialogue: 0,0:38:48.48,0:38:50.48,Default,,0,0,0,,Ma Thần cũng từng cứu mạng ta một lần,
Dialogue: 0,0:38:51.67,0:38:53.67,Default,,0,0,0,,huống chi điều Tự Anh\Nmong muốn nhất trong kiếp này
Dialogue: 0,0:38:53.67,0:38:55.00,Default,,0,0,0,,là đi theo Ma Thần,
Dialogue: 0,0:38:55.23,0:38:57.03,Default,,0,0,0,,tận mắt nhìn thấy Ma Thần trở lại.
Dialogue: 0,0:38:58.76,0:39:00.92,Default,,0,0,0,,Nay muội ấy đã\Nkhông thể thực hiện mong muốn này,
Dialogue: 0,0:39:01.00,0:39:02.11,Default,,0,0,0,,ta là tỷ tỷ của muội ấy
Dialogue: 0,0:39:02.80,0:39:05.32,Default,,0,0,0,,thì sẽ thay muội ấy\Nchứng kiến đến phút cuối cùng.
Dialogue: 0,0:39:06.67,0:39:07.63,Default,,0,0,0,,Hãy cho ta biết
Dialogue: 0,0:39:07.71,0:39:10.15,Default,,0,0,0,,làm thế nào\Nmới có thể giúp ngài giống nhất tam giới
Dialogue: 0,0:39:10.15,0:39:11.40,Default,,0,0,0,,như vạn năm trước?
Dialogue: 0,0:39:12.67,0:39:13.84,Default,,0,0,0,,Theo ta biết thì
Dialogue: 0,0:39:14.28,0:39:16.19,Default,,0,0,0,,ba vũ khí Ma tộc\Nđến giờ vẫn chưa trở về vị trí cũ.
Dialogue: 0,0:39:16.76,0:39:17.76,Default,,0,0,0,,Nỏ Đồ Thần
Dialogue: 0,0:39:19.63,0:39:20.84,Default,,0,0,0,,và ấn Tẩy Tủy
Dialogue: 0,0:39:21.15,0:39:22.67,Default,,0,0,0,,đang ở Tiên Môn.
Dialogue: 0,0:39:24.07,0:39:25.71,Default,,0,0,0,,Nhưng đây là việc của ta,
Dialogue: 0,0:39:26.19,0:39:28.40,Default,,0,0,0,,ân oán giữa ta và cô đã chấm dứt.
Dialogue: 0,0:39:29.59,0:39:30.36,Default,,0,0,0,,Mạt Nữ,
Dialogue: 0,0:39:31.00,0:39:33.00,Default,,0,0,0,,dù không có Tiêu Lẫm và Tự Anh
Dialogue: 0,0:39:33.48,0:39:35.63,Default,,0,0,0,,thì cô cũng có thể\Nsống cuộc đời của bản thân.
Dialogue: 0,0:39:37.15,0:39:38.07,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:39:39.00,0:39:40.11,Default,,0,0,0,,dường như ngài
Dialogue: 0,0:39:40.40,0:39:42.23,Default,,0,0,0,,không giống Ma Thần
Dialogue: 0,0:39:42.59,0:39:43.51,Default,,0,0,0,,ta quen biết.
Dialogue: 0,0:39:48.96,0:39:50.40,Default,,0,0,0,,Trời cao biển rộng,
Dialogue: 0,0:39:50.96,0:39:52.96,Default,,0,0,0,,rồi cô sẽ có thể tìm được nơi tự do.
Dialogue: 0,0:40:17.51,0:40:19.48,Default,,0,0,0,,Cù Huyền Tử đã chết,
Dialogue: 0,0:40:19.71,0:40:21.63,Default,,0,0,0,,Triệu Du cũng đã chết rồi.
Dialogue: 0,0:40:21.80,0:40:23.59,Default,,0,0,0,,Thật là tốt quá.
Dialogue: 0,0:40:25.23,0:40:29.80,Default,,0,0,0,,Nay, phong ấn nỏ Đồ Thần\Nchỉ còn lại mình ta.
Dialogue: 0,0:40:29.80,0:40:31.76,Default,,0,0,0,,Ông trời có an bài,
Dialogue: 0,0:40:31.76,0:40:33.40,Default,,0,0,0,,cướp đi tính mạng Mịch Nhi của ta
Dialogue: 0,0:40:33.40,0:40:36.00,Default,,0,0,0,,lại đưa nỏ Đồ Thần đến tay ta.
Dialogue: 0,0:40:36.00,0:40:37.71,Default,,0,0,0,,Sao ta có thể giao báu vật này
Dialogue: 0,0:40:37.71,0:40:40.63,Default,,0,0,0,,vào tay đám nhãi con ở\NHành Dương Tông được chứ?
Dialogue: 0,0:40:40.71,0:40:43.00,Default,,0,0,0,,Ta phải lợi dụng sức mạnh của ngươi.
Dialogue: 0,0:40:43.55,0:40:44.84,Default,,0,0,0,,Từ nay về sau,
Dialogue: 0,0:40:44.96,0:40:45.92,Default,,0,0,0,,ta mới là
Dialogue: 0,0:40:47.28,0:40:49.59,Default,,0,0,0,,người thống trị Tiên Môn.
Dialogue: 0,0:41:23.51,0:41:24.71,Default,,0,0,0,,Mắt của Ma Thần,
Dialogue: 0,0:41:25.07,0:41:26.32,Default,,0,0,0,,trả lại cho ngài.
Dialogue: 0,0:41:28.76,0:41:30.00,Default,,0,0,0,,Sầm chưởng môn bị hại,
Dialogue: 0,0:41:30.00,0:41:31.07,Default,,0,0,0,,[Quang Đại Trạch Trường] [Đạo Cao Tắc Hĩ]\Nnỏ Đồ Thần bị cướp.
Dialogue: 0,0:41:31.32,0:41:33.76,Default,,0,0,0,,[Quang Đại Trạch Trường] [Đạo Cao Tắc Hĩ]\NChưởng môn ba môn phái lớn đều đã bỏ mạng,
Dialogue: 0,0:41:33.96,0:41:35.63,Default,,0,0,0,,[Quang Đại Trạch Trường] [Đạo Cao Tắc Hĩ]\Nba vũ khí Ma tộc chỉ còn lại ấn Tẩy Tủy
Dialogue: 0,0:41:35.63,0:41:37.15,Default,,0,0,0,,[Quang Đại Trạch Trường] [Đạo Cao Tắc Hĩ]\Nvẫn ở trong Hành Dương Tông chúng ta.
Dialogue: 0,0:41:37.15,0:41:39.07,Default,,0,0,0,,[Quang Đại Trạch Trường] [Đạo Cao Tắc Hĩ]\NNhưng không biết còn bảo vệ được bao lâu.
Dialogue: 0,0:41:41.67,0:41:43.76,Default,,0,0,0,,Đàm Đài Tẫn đúng là quá đáng quá mức.
Dialogue: 0,0:41:45.03,0:41:48.28,Default,,0,0,0,,Rốt cuộc là ai đã giết hại Sầm chưởng môn?
Dialogue: 0,0:41:49.84,0:41:51.55,Default,,0,0,0,,Theo lời đệ tử Xích Tiêu Tông
Dialogue: 0,0:41:51.92,0:41:53.67,Default,,0,0,0,,thì là do một ma nữ áo đỏ làm.
Dialogue: 0,0:41:54.80,0:41:57.40,Default,,0,0,0,,Thần thái của cô ta có đôi chút giống với
Dialogue: 0,0:41:57.63,0:41:58.96,Default,,0,0,0,,Nữ Bạt Tự Anh.
Dialogue: 0,0:42:08.19,0:42:09.92,Default,,0,0,0,,[Là nàng đã hoàn toàn thay đổi ta.]
Dialogue: 0,0:42:10.59,0:42:11.40,Default,,0,0,0,,[Cho ta]
Dialogue: 0,0:42:12.00,0:42:13.71,Default,,0,0,0,,[cơ hội sống một lần nữa.]
Dialogue: 0,0:42:14.92,0:42:17.36,Default,,0,0,0,,[Sau này ta sẽ không dính vào\Nsức mạnh Ma Thần nữa.]
Dialogue: 0,0:42:18.84,0:42:19.80,Default,,0,0,0,,[Vì nàng,]
Dialogue: 0,0:42:21.71,0:42:23.44,Default,,0,0,0,,[ta nhất định sẽ nói được làm được.]
Dialogue: 0,0:42:25.15,0:42:26.11,Default,,0,0,0,,[Đàm Đài Tẫn,]
Dialogue: 0,0:42:26.59,0:42:28.07,Default,,0,0,0,,[chàng đang làm gì thế?]
Dialogue: 0,0:42:28.55,0:42:29.80,Default,,0,0,0,,[Đàm Đài Tẫn đã nhập ma rồi,]
Dialogue: 0,0:42:29.80,0:42:30.92,Default,,0,0,0,,[hắn đã giết Triệu Du sư bá.]
Dialogue: 0,0:42:32.03,0:42:34.80,Default,,0,0,0,,[Giờ tất cả những gì cô làm]
Dialogue: 0,0:42:36.07,0:42:37.44,Default,,0,0,0,,[đều uổng công hết rồi.]
Dialogue: 0,0:42:38.88,0:42:40.40,Default,,0,0,0,,[Cho dù số phận có ra sao,]
Dialogue: 0,0:42:40.55,0:42:41.76,Default,,0,0,0,,[thị phi, chính tà,]
Dialogue: 0,0:42:41.76,0:42:43.28,Default,,0,0,0,,[ta có thể tự mình lựa chọn.]
Dialogue: 0,0:42:44.80,0:42:45.44,Default,,0,0,0,,[Ta]
Dialogue: 0,0:42:46.92,0:42:49.03,Default,,0,0,0,,[sẽ không trở thành Ma Thần đâu.]
Dialogue: 0,0:42:52.28,0:42:54.07,Default,,0,0,0,,[Chỉ khi thật sự trừ khử Ma Thần]
Dialogue: 0,0:42:54.07,0:42:56.28,Default,,0,0,0,,[mới có thể khiến họ thấy yên tâm.]
Dialogue: 0,0:42:57.07,0:42:58.07,Default,,0,0,0,,[Cũng chỉ có vậy]
Dialogue: 0,0:42:59.32,0:43:01.71,Default,,0,0,0,,[ta mới thật sự có thể đi tiếp cùng nàng.]
Dialogue: 0,0:43:44.40,0:43:44.92,Default,,0,0,0,,Tô Tô,
Dialogue: 0,0:43:45.84,0:43:46.67,Default,,0,0,0,,về cùng ta đi.
Dialogue: 0,0:43:47.48,0:43:48.88,Default,,0,0,0,,Từ khi mở ra đạo Đồng Bi,
Dialogue: 0,0:43:49.28,0:43:50.67,Default,,0,0,0,,bên ngoài môn phái\Nkhông còn an toàn nữa rồi.
Dialogue: 0,0:43:51.59,0:43:53.19,Default,,0,0,0,,Đại sư huynh, huynh cứ kệ ta.
Dialogue: 0,0:43:54.00,0:43:55.00,Default,,0,0,0,,Nếu đã rời khỏi sơn môn,
Dialogue: 0,0:43:55.32,0:43:56.88,Default,,0,0,0,,Lê Tô Tô sẽ tự gánh vác sống chết.
Dialogue: 0,0:44:00.48,0:44:01.44,Default,,0,0,0,,Muội muốn làm gì?
Dialogue: 0,0:44:02.80,0:44:03.96,Default,,0,0,0,,Đi tìm Đàm Đài Tẫn sao?
Dialogue: 0,0:44:06.71,0:44:08.36,Default,,0,0,0,,Bây giờ muội đi tìm hắn thì làm được gì?
Dialogue: 0,0:44:09.19,0:44:10.71,Default,,0,0,0,,Hắn đã giết sư phụ của mình,
Dialogue: 0,0:44:11.23,0:44:13.03,Default,,0,0,0,,rồi lại tới Xích Tiêu Tông\Ngiết người cướp nỏ.
Dialogue: 0,0:44:13.63,0:44:15.84,Default,,0,0,0,,Có khi hắn đã câu kết với Đế Miện từ lâu.
Dialogue: 0,0:44:16.71,0:44:18.96,Default,,0,0,0,,Hắn là một yêu ma tay dính máu tươi,
Dialogue: 0,0:44:18.96,0:44:20.15,Default,,0,0,0,,muội vẫn không chịu tin sao?
Dialogue: 0,0:44:28.07,0:44:28.96,Default,,0,0,0,,Lê Tô Tô,
Dialogue: 0,0:44:29.11,0:44:30.07,Default,,0,0,0,,muội bình tĩnh lại đi.
Dialogue: 0,0:44:30.67,0:44:31.96,Default,,0,0,0,,Giờ mà đi là đi nộp mạng đấy.
Dialogue: 0,0:44:34.80,0:44:35.88,Default,,0,0,0,,Đại sư huynh, huynh bỏ ta ra đã.
Dialogue: 0,0:44:42.00,0:44:43.63,Default,,0,0,0,,Nếu như chàng ấy thật sự có nỗi khổ,
Dialogue: 0,0:44:44.32,0:44:46.19,Default,,0,0,0,,bất kể thế nào ta cũng phải đi.
Dialogue: 0,0:44:47.32,0:44:48.76,Default,,0,0,0,,Ta phải hỏi cho ra nhẽ.
Dialogue: 0,0:44:49.55,0:44:50.96,Default,,0,0,0,,Nếu như cứ sống trong mơ hồ
Dialogue: 0,0:44:50.96,0:44:52.03,Default,,0,0,0,,thì có khác gì chết?
Dialogue: 0,0:44:52.84,0:44:54.00,Default,,0,0,0,,Ít nhất ta cũng phải biết
Dialogue: 0,0:44:54.84,0:44:56.11,Default,,0,0,0,,mình nên hận ai.
Dialogue: 0,0:45:02.36,0:45:03.03,Default,,0,0,0,,Được.
Dialogue: 0,0:45:03.59,0:45:04.84,Default,,0,0,0,,Nếu muội đã kiên quyết như vậy
Dialogue: 0,0:45:05.76,0:45:06.80,Default,,0,0,0,,thì muội đi đi.
Dialogue: 0,0:45:08.28,0:45:09.32,Default,,0,0,0,,Đa tạ đại sư huynh.
Dialogue: 0,0:45:12.76,0:45:14.00,Default,,0,0,0,,[Nhưng từ nay về sau,]
Dialogue: 0,0:45:14.88,0:45:17.00,Default,,0,0,0,,[Hành Dương Tông không còn\Nđệ tử như muội nữa,]
Dialogue: 0,0:45:18.55,0:45:20.44,Default,,0,0,0,,[ta cũng không còn sư muội này nữa.]
Dialogue: 0,0:45:21.11,0:45:23.55,Default,,0,0,0,,[Xin lỗi, đại sư huynh.]
Dialogue: 0,0:45:37.76,0:45:38.80,Default,,0,0,0,,[Nỏ Đồ Thần.]
Dialogue: 0,0:45:46.80,0:45:48.84,Default,,0,0,0,,[Mạt Nữ lại lo chuyện bao đồng rồi.]
Dialogue: 0,0:45:51.59,0:45:52.23,Default,,0,0,0,,[Thôi vậy,]
Dialogue: 0,0:45:53.00,0:45:54.51,Default,,0,0,0,,[ta cứ làm Ma Thần cho tốt,]
Dialogue: 0,0:45:55.71,0:45:58.19,Default,,0,0,0,,[vậy thì Tô Tô mới hoàn toàn hết hy vọng,]
Dialogue: 0,0:45:59.71,0:46:02.15,Default,,0,0,0,,[Tiên Môn mới không để đường sống cho ta.]
Dialogue: 0,0:46:33.44,0:46:35.88,Default,,0,0,0,,Cung nghênh chủ nhân giáng thế.
Dialogue: 0,0:46:36.51,0:46:38.71,Default,,0,0,0,,Cung nghênh chủ nhân giáng thế.
Dialogue: 0,0:46:39.23,0:46:41.59,Default,,0,0,0,,Cung nghênh chủ nhân giáng thế.
Dialogue: 0,0:46:41.71,0:46:43.07,Default,,0,0,0,,Các vị đợi lâu rồi.
Dialogue: 0,0:46:43.59,0:46:44.80,Default,,0,0,0,,Từ ngày hôm nay,
Dialogue: 0,0:46:45.92,0:46:47.63,Default,,0,0,0,,ta sẽ là chủ nhân của các ngươi.
Dialogue: 0,0:46:48.80,0:46:50.67,Default,,0,0,0,,Ta muốn vấy bẩn mọi thứ trong thiên hạ,
Dialogue: 0,0:46:51.28,0:46:52.84,Default,,0,0,0,,vạn vật cùng bi.
Dialogue: 0,0:46:52.84,0:46:54.71,Default,,0,0,0,,Thiên hạ vẩn đục,
Dialogue: 0,0:46:55.03,0:46:56.84,Default,,0,0,0,,vạn vật cùng bi.
Dialogue: 0,0:46:57.23,0:46:58.96,Default,,0,0,0,,Thiên hạ vẩn đục,
Dialogue: 0,0:46:59.44,0:47:01.03,Default,,0,0,0,,vạn vật cùng bi.
Dialogue: 0,0:47:01.67,0:47:04.76,Default,,0,0,0,,[Kiếm Trảm Thiên và nỏ Đồ Thần\Nđều đã rơi vào tay ta.]
Dialogue: 0,0:47:05.32,0:47:06.84,Default,,0,0,0,,[Còn ấn Tẩy Tủy]
Dialogue: 0,0:47:07.63,0:47:09.48,Default,,0,0,0,,[đang bị Hành Dương Tông chiếm giữ nữa.]
Dialogue: 0,0:47:09.80,0:47:11.44,Default,,0,0,0,,Vạn vật cùng bi.
Dialogue: 0,0:47:11.63,0:47:14.36,Default,,0,0,0,,[Ta chỉ cần tập hợp đủ ba vũ khí Ma tộc,]
Dialogue: 0,0:47:14.63,0:47:18.03,Default,,0,0,0,,[đạo Đồng Bi sẽ có thể\Nphát huy sức mạnh lớn nhất.]
Dialogue: 0,0:47:19.23,0:47:20.28,Default,,0,0,0,,Ta nghe nói
Dialogue: 0,0:47:21.23,0:47:25.23,Default,,0,0,0,,bọn họ bày bố rất nhiều pháp thuật\Nquanh ấn Tẩy Tủy,
Dialogue: 0,0:47:25.80,0:47:28.71,Default,,0,0,0,,muốn mượn sức mạnh của\Nđất trời làm ta bị thương.
Dialogue: 0,0:47:30.63,0:47:32.32,Default,,0,0,0,,Đúng là mơ tưởng hão huyền.
Dialogue: 0,0:47:32.32,0:47:33.67,Default,,0,0,0,,Giết bọn chúng,
Dialogue: 0,0:47:33.84,0:47:35.59,Default,,0,0,0,,đoạt lại ấn Tẩy Tủy.
Dialogue: 0,0:47:36.03,0:47:37.44,Default,,0,0,0,,Giết bọn chúng,
Dialogue: 0,0:47:37.63,0:47:39.40,Default,,0,0,0,,đoạt lại ấn Tẩy Tủy.
Dialogue: 0,0:47:42.11,0:47:44.07,Default,,0,0,0,,Hôm ta tâm trạng của ta rất tốt,
Dialogue: 0,0:47:44.48,0:47:46.07,Default,,0,0,0,,hà tất phải lạm sát.
Dialogue: 0,0:47:47.63,0:47:49.48,Default,,0,0,0,,Chi bằng ta chơi trò ảo thuật đi.
Dialogue: 0,0:47:53.40,0:47:54.84,Default,,0,0,0,,Ấn Tẩy Tủy.
Dialogue: 0,0:48:25.84,0:48:26.96,Default,,0,0,0,,Thương Cửu Mân đã khởi động
Dialogue: 0,0:48:26.96,0:48:28.19,Default,,0,0,0,,trận pháp triệu hồi vũ khí Ma tộc rồi.
Dialogue: 0,0:48:28.32,0:48:28.92,Default,,0,0,0,,Chưởng môn,
Dialogue: 0,0:48:29.23,0:48:30.23,Default,,0,0,0,,chúng ta nên làm gì đây?
Dialogue: 0,0:48:31.63,0:48:33.19,Default,,0,0,0,,Ma Vực đã có hai vũ khí Ma tộc rồi,
Dialogue: 0,0:48:33.48,0:48:35.28,Default,,0,0,0,,không thể để hắn mang món cuối cùng đi.
Dialogue: 0,0:48:37.15,0:48:37.96,Default,,0,0,0,,Tất cả lùi lại.
Dialogue: 0,0:48:58.71,0:49:00.36,Default,,0,0,0,,Đám kiến cỏ không biết lượng sức,
Dialogue: 0,0:49:00.88,0:49:02.44,Default,,0,0,0,,đừng phí công vô ích nữa.
Dialogue: 0,0:49:02.88,0:49:03.80,Default,,0,0,0,,Tiếng gì vậy?
Dialogue: 0,0:49:03.80,0:49:04.80,Default,,0,0,0,,Là Ma Thần.
Dialogue: 0,0:49:05.19,0:49:05.88,Default,,0,0,0,,Đàm Đài Tẫn,
Dialogue: 0,0:49:06.36,0:49:07.51,Default,,0,0,0,,không ngờ ngươi ngông cuồng như vậy,
Dialogue: 0,0:49:07.92,0:49:09.63,Default,,0,0,0,,còn chẳng lộ diện đã muốn\Nmang ấn Tẩy Tủy đi.
Dialogue: 0,0:49:09.88,0:49:11.00,Default,,0,0,0,,Công Dã Tịch Vô,
Dialogue: 0,0:49:11.84,0:49:12.54,Default,,0,0,0,,bây giờ ngươi vẫn muốn chống đối ta sao?
Dialogue: 0,0:49:12.54,0:49:13.96,Default,,0,0,0,,[Đạo Cao Tắc Hĩ]\Nbây giờ ngươi vẫn muốn chống đối ta sao?
Dialogue: 0,0:49:14.51,0:49:15.55,Default,,0,0,0,,[Đạo Cao Tắc Hĩ]\NTa khuyên ngươi,
Dialogue: 0,0:49:15.92,0:49:17.07,Default,,0,0,0,,thần phục ta,
Dialogue: 0,0:49:17.88,0:49:20.00,Default,,0,0,0,,thần phục trước sức mạnh tuyệt đối đi.
Dialogue: 0,0:49:20.44,0:49:21.15,Default,,0,0,0,,Mơ đi.
Dialogue: 0,0:49:21.15,0:49:22.34,Default,,0,0,0,,[Đạo Cao Tắc Hĩ]
Dialogue: 0,0:49:34.67,0:49:35.44,Default,,0,0,0,,Đại sư huynh.
Dialogue: 0,0:49:35.44,0:49:35.96,Default,,0,0,0,,Sư huynh.
Dialogue: 0,0:50:24.28,0:50:26.03,Default,,0,0,0,,Thiên hạ vẩn đục,
Dialogue: 0,0:50:26.23,0:50:28.00,Default,,0,0,0,,vạn vật cùng bi.
Dialogue: 0,0:50:28.23,0:50:29.96,Default,,0,0,0,,Thiên hạ vẩn đục,
Dialogue: 0,0:50:30.23,0:50:31.96,Default,,0,0,0,,vạn vật cùng bi.
Dialogue: 0,0:50:32.51,0:50:33.19,Default,,0,0,0,,[Hóa ra]
Dialogue: 0,0:50:33.84,0:50:35.80,Default,,0,0,0,,[đây là đạo Đồng Bi.]
Dialogue: 0,0:50:37.07,0:50:39.36,Default,,0,0,0,,[Cảm giác này vượt ngoài\Ngiới hạn nhận biết rồi.]
Dialogue: 0,0:50:43.55,0:50:45.19,Default,,0,0,0,,Thiên hạ vẩn đục,
Dialogue: 0,0:50:45.48,0:50:47.28,Default,,0,0,0,,vạn vật cùng bi.
Dialogue: 0,0:50:47.59,0:50:49.40,Default,,0,0,0,,Thiên hạ vẩn đục,
Dialogue: 0,0:50:49.55,0:50:51.28,Default,,0,0,0,,vạn vật cùng bi.
Dialogue: 0,0:50:53.03,0:50:54.71,Default,,0,0,0,,[Đây là sức mạnh của đạo Đồng Bi.]
Dialogue: 0,0:50:56.44,0:50:57.51,Default,,0,0,0,,[Tà ác…]
Dialogue: 0,0:51:04.23,0:51:07.75,Default,,0,0,0,,Thiên hạ vẩn đục, vạn vật cùng bi.
Dialogue: 0,0:51:38.92,0:51:43.86,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:51:58.88,0:52:06.64,Default,,0,0,0,,♪Nỗi lòng phàm tục\Nlà ngước mắt lên trăng bỗng khuyết♪
Dialogue: 0,0:52:06.64,0:52:14.44,Default,,0,0,0,,♪Hồng trần là đôi mắt thấy\Nmuôn hoa rụng giữa cơn mưa tuyết♪
Dialogue: 0,0:52:14.44,0:52:21.56,Default,,0,0,0,,♪Trắc ẩn là\Nmột cánh bướm trong lòng khi tan biến♪
Dialogue: 0,0:52:22.16,0:52:26.04,Default,,0,0,0,,♪Tỉnh ngộ là gột rửa hồi ức\Ntrong nước đục♪
Dialogue: 0,0:52:26.04,0:52:30.24,Default,,0,0,0,,♪Từ ấy chẳng gặp nhau♪
Dialogue: 0,0:52:31.80,0:52:35.40,Default,,0,0,0,,♪Ta từng thấy lời dịu dàng, từng nở hoa♪
Dialogue: 0,0:52:35.40,0:52:38.64,Default,,0,0,0,,♪Cay mắt đến nỗi nói mớ♪
Dialogue: 0,0:52:39.20,0:52:43.32,Default,,0,0,0,,♪Tơ tình vấn vương, mái ngói dễ vỡ♪
Dialogue: 0,0:52:43.32,0:52:46.84,Default,,0,0,0,,♪Một vòng tay có sự sợ hãi vô tận♪
Dialogue: 0,0:52:47.44,0:52:50.88,Default,,0,0,0,,♪Ta kính trọng người biết bao,\Nthời gian thấm thoát thoi đưa♪
Dialogue: 0,0:52:50.88,0:52:54.56,Default,,0,0,0,,♪Từng vững tin được yêu trong phút chốc♪
Dialogue: 0,0:52:54.64,0:52:58.76,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:52:58.76,0:53:06.52,Default,,0,0,0,,♪Sự thành kính tựa ánh trăng không tì vết♪
Dialogue: 0,0:53:08.52,0:53:11.92,Default,,0,0,0,,♪Hãy lắng nghe hơi thở của đóa hoa♪
Dialogue: 0,0:53:12.04,0:53:15.44,Default,,0,0,0,,♪Như sự phồn hoa của chúng sinh muôn loài♪
Dialogue: 0,0:53:16.00,0:53:20.20,Default,,0,0,0,,♪Dẫu đi bao lâu, sao trời hay bão cát♪
Dialogue: 0,0:53:20.20,0:53:24.40,Default,,0,0,0,,♪Ánh trăng là bộ giáp của ta♪
Dialogue: 0,0:53:24.40,0:53:27.72,Default,,0,0,0,,♪Ta mong sau này người mang theo vết sẹo♪
Dialogue: 0,0:53:27.72,0:53:31.68,Default,,0,0,0,,♪Cũng thử sống dịu dàng một phen♪
Dialogue: 0,0:53:31.84,0:53:35.36,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:53:35.36,0:53:43.00,Default,,0,0,0,,♪Yêu lại người từng căm hận♪
Dialogue: 0,0:53:43.00,0:53:50.40,Default,,0,0,0,,♪Kiếp phù du nhỏ, giấc mộng lớn♪
Dialogue: 0,0:53:50.40,0:53:59.04,Default,,0,0,0,,♪Xin đừng phụ lòng nhau♪
