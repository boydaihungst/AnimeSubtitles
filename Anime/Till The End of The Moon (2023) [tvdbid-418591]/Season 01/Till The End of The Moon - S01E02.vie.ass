Dialogue: 0,0:00:23.08,0:00:26.84,Default,,0,0,0,,♪Đêm tối, trăng ướt, máu lạnh♪
Dialogue: 0,0:00:27.28,0:00:30.60,Default,,0,0,0,,♪Phơi bày trước\Nđôi mắt sợ ánh sáng của ta♪
Dialogue: 0,0:00:30.92,0:00:34.36,Default,,0,0,0,,♪Là sáng bừng hay ấm áp♪
Dialogue: 0,0:00:34.56,0:00:37.92,Default,,0,0,0,,♪Ta chỉ có thể suy đoán bằng trực giác♪
Dialogue: 0,0:00:38.80,0:00:46.04,Default,,0,0,0,,♪Ôi, tình yêu khuynh thế như ngọc,\Ntạo nên ta♪
Dialogue: 0,0:00:46.60,0:00:53.76,Default,,0,0,0,,♪Ôi, tơ tình vương vấn♪
Dialogue: 0,0:00:55.24,0:00:58.80,Default,,0,0,0,,♪Ta không sợ trên cõi đời này♪
Dialogue: 0,0:00:59.16,0:01:02.68,Default,,0,0,0,,♪Chúng sinh đối xử với ta ra sao♪
Dialogue: 0,0:01:03.32,0:01:06.48,Default,,0,0,0,,♪Đột phá, vùng vẫy♪
Dialogue: 0,0:01:06.80,0:01:11.08,Default,,0,0,0,,♪Làm sao để phân biệt chính tà, thiện ác♪
Dialogue: 0,0:01:11.52,0:01:14.80,Default,,0,0,0,,♪Từng có khoảnh khắc yếu đuối♪
Dialogue: 0,0:01:15.16,0:01:18.52,Default,,0,0,0,,♪Dùng nụ hôn tình yêu\Nđể vết thương lành lại♪
Dialogue: 0,0:01:19.04,0:01:22.48,Default,,0,0,0,,♪Sự tồn tại của ta♪
Dialogue: 0,0:01:23.00,0:01:29.52,Default,,0,0,0,,♪Sẽ không vì gai nhọn mà gãy cánh♪
Dialogue: 0,0:01:31.28,0:01:35.92,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:01:35.92,0:01:38.88,Default,,0,0,0,,[Tập 2]
Dialogue: 0,0:02:01.00,0:02:02.28,Default,,0,0,0,,Vậy tiểu thư nghỉ ngơi trước đi.
Dialogue: 0,0:02:02.28,0:02:03.64,Default,,0,0,0,,Xuân Đào ở ngay bên cạnh,
Dialogue: 0,0:02:03.64,0:02:04.88,Default,,0,0,0,,tiểu thư có việc gì cứ gọi em là được.
Dialogue: 0,0:02:19.31,0:02:20.00,Default,,0,0,0,,[Cha ơi,]
Dialogue: 0,0:02:20.72,0:02:22.72,Default,,0,0,0,,[con ở đây đã thu xếp ổn thỏa,]
Dialogue: 0,0:02:24.31,0:02:25.63,Default,,0,0,0,,[mọi người có thể yên tâm rồi.]
Dialogue: 0,0:02:29.75,0:02:30.72,Default,,0,0,0,,[Ma Thần…]
Dialogue: 0,0:02:32.07,0:02:33.79,Default,,0,0,0,,[Con tìm được Ma Thần rồi.]
Dialogue: 0,0:02:35.59,0:02:36.40,Default,,0,0,0,,[Chỉ là…]
Dialogue: 0,0:02:37.51,0:02:39.19,Default,,0,0,0,,[bây giờ vẫn chưa thể giết hắn]
Dialogue: 0,0:02:40.35,0:02:42.40,Default,,0,0,0,,[để thay đổi vận mệnh Ma Thần giáng thế.]
Dialogue: 0,0:02:44.35,0:02:44.96,Default,,0,0,0,,[Có điều,]
Dialogue: 0,0:02:46.88,0:02:49.28,Default,,0,0,0,,[cũng may bây giờ\Nhắn vẫn chỉ là một người phàm yếu đuối.]
Dialogue: 0,0:02:51.06,0:02:53.74,Default,,0,0,0,,♪Đường dài hơn năm tháng♪
Dialogue: 0,0:02:54.16,0:02:55.91,Default,,0,0,0,,[Phạt hắn quỳ trong trời tuyết giá rét,]
Dialogue: 0,0:02:57.75,0:02:59.44,Default,,0,0,0,,[để hắn chịu khổ một chút là được.]
Dialogue: 0,0:02:59.78,0:03:01.78,Default,,0,0,0,,♪Đặt bút nhưng lại bối rối♪
Dialogue: 0,0:03:02.14,0:03:05.10,Default,,0,0,0,,♪Chỉ dám hỏi gió xuân thế nào♪
Dialogue: 0,0:03:07.66,0:03:12.63,Default,,0,0,0,,♪Đêm qua tỉnh mộng,\Nđẩy cửa sổ thấy thôn nhỏ♪
Dialogue: 0,0:03:12.63,0:03:13.47,Default,,0,0,0,,[Nổi gió rồi.]
Dialogue: 0,0:03:15.91,0:03:16.56,Default,,0,0,0,,[Đêm nay,]
Dialogue: 0,0:03:19.44,0:03:21.24,Default,,0,0,0,,[chắc chắn vô cùng gian nan.]
Dialogue: 0,0:03:22.46,0:03:25.19,Default,,0,0,0,,♪Đồng cỏ xanh khô héo♪
Dialogue: 0,0:03:25.19,0:03:26.91,Default,,0,0,0,,[Tiếng gió bên ngoài lớn như vậy,]
Dialogue: 0,0:03:27.75,0:03:29.00,Default,,0,0,0,,[hắn sẽ không sao chứ?]
Dialogue: 0,0:03:29.22,0:03:32.94,Default,,0,0,0,,♪Cây đổ kêu xào xạc,\Nnhắm mắt thấy Thần Phật♪
Dialogue: 0,0:03:33.03,0:03:35.47,Default,,0,0,0,,[Cha, Triệu Du bá bá, đại sư huynh,]
Dialogue: 0,0:03:36.68,0:03:38.19,Default,,0,0,0,,[con làm như vậy không sai chứ?]
Dialogue: 0,0:03:40.34,0:03:43.94,Default,,0,0,0,,♪Hoa đào rơi xuống, xuân thu cũng bay đi♪
Dialogue: 0,0:03:43.94,0:03:47.38,Default,,0,0,0,,♪Biết rõ nhất là\Nkhoảnh khắc trong giấc mơ♪
Dialogue: 0,0:03:47.90,0:03:52.02,Default,,0,0,0,,♪Đời dài phiêu bạt mãi,\Ntỉnh dậy lại làm khách♪
Dialogue: 0,0:03:52.02,0:03:54.94,Default,,0,0,0,,♪Năm tháng trôi qua,\Nai sống riêng phần người nấy♪
Dialogue: 0,0:03:55.18,0:03:58.07,Default,,0,0,0,,♪Nơi nơi thì sao, cảnh xuân thì sao♪
Dialogue: 0,0:03:58.07,0:04:00.16,Default,,0,0,0,,[Hắn thật sự quỳ mãi như vậy à?]
Dialogue: 0,0:04:00.16,0:04:02.06,Default,,0,0,0,,♪Không mong cầu gì được♪
Dialogue: 0,0:04:02.22,0:04:06.26,Default,,0,0,0,,♪May thay chỉ là chuyện thường trên đời♪
Dialogue: 0,0:04:06.62,0:04:10.66,Default,,0,0,0,,♪Viết khúc hát bình thường♪
Dialogue: 0,0:04:29.83,0:04:31.07,Default,,0,0,0,,[Mình ngủ quên lúc nào vậy?]
Dialogue: 0,0:04:34.56,0:04:35.95,Default,,0,0,0,,Tiểu thư, người tỉnh rồi.
Dialogue: 0,0:04:36.56,0:04:39.07,Default,,0,0,0,,Đêm qua tiếng gió thổi lớn\Nnhư tiếng sói tru vậy,
Dialogue: 0,0:04:39.07,0:04:40.27,Default,,0,0,0,,người ngủ có ngon không?
Dialogue: 0,0:04:44.27,0:04:45.44,Default,,0,0,0,,Sao hắn vẫn còn ở đây vậy?
Dialogue: 0,0:04:45.56,0:04:46.36,Default,,0,0,0,,Cô nhìn thấy chưa?
Dialogue: 0,0:04:46.48,0:04:47.63,Default,,0,0,0,,Đã ngày thứ ba rồi nhỉ?
Dialogue: 0,0:04:47.63,0:04:48.95,Default,,0,0,0,,Mệnh cứng cỏi thật đấy.
Dialogue: 0,0:04:49.39,0:04:50.31,Default,,0,0,0,,Đắc tội với nhị tiểu thư
Dialogue: 0,0:04:50.31,0:04:51.36,Default,,0,0,0,,là không có kết cục tốt đẹp đâu.
Dialogue: 0,0:04:51.36,0:04:54.62,Default,,0,0,0,,♪May mắn chỉ là chuyện của người thường♪
Dialogue: 0,0:04:54.98,0:04:59.98,Default,,0,0,0,,♪Viết khúc hát bình thường♪
Dialogue: 0,0:05:01.56,0:05:02.75,Default,,0,0,0,,[Chắc chắn là giả vờ.]
Dialogue: 0,0:05:03.56,0:05:05.44,Default,,0,0,0,,[Ở đây ai ai cũng ghét hắn như vậy,]
Dialogue: 0,0:05:05.95,0:05:07.51,Default,,0,0,0,,[nếu hắn không giả vờ\Nđáng thương một chút]
Dialogue: 0,0:05:07.83,0:05:09.12,Default,,0,0,0,,[thì càng khó sống.]
Dialogue: 0,0:05:26.44,0:05:28.31,Default,,0,0,0,,Cảm ơn, cảm ơn Diệp tiểu thư.
Dialogue: 0,0:05:29.00,0:05:30.56,Default,,0,0,0,,Diệp tiểu thư đúng là Bồ Tát sống.
Dialogue: 0,0:05:31.04,0:05:33.07,Default,,0,0,0,,Bao nhiêu năm qua, cứ mùng một và mười lăm
Dialogue: 0,0:05:33.07,0:05:34.63,Default,,0,0,0,,đều đích thân tới lều phát cháo,
Dialogue: 0,0:05:34.63,0:05:35.75,Default,,0,0,0,,vô cùng kiên trì.
Dialogue: 0,0:05:36.54,0:05:38.92,Default,,0,0,0,,- Cầm chắc nhé.\N- Ngày mai ta cũng tới miếu xin
Dialogue: 0,0:05:39.27,0:05:41.00,Default,,0,0,0,,- cho cô ấy và lục điện hạ sớm thành thân.\N- Ngươi cầm chắc nhé.
Dialogue: 0,0:05:41.00,0:05:41.48,Default,,0,0,0,,Không cần cảm ơn.
Dialogue: 0,0:05:41.48,0:05:42.80,Default,,0,0,0,,Sinh cho ngài ấy vài ba tiểu vương tôn.
Dialogue: 0,0:05:42.80,0:05:43.51,Default,,0,0,0,,Không cần cảm ơn.
Dialogue: 0,0:05:43.80,0:05:44.44,Default,,0,0,0,,Tiểu thư,
Dialogue: 0,0:05:44.71,0:05:47.07,Default,,0,0,0,,tối qua, lục điện hạ\Nphái Chung Thái tới đưa tin,
Dialogue: 0,0:05:47.07,0:05:49.80,Default,,0,0,0,,- nói hôm nay được nghỉ, sẽ tới lều cháo giúp.\N- Không cần cảm ơn.
Dialogue: 0,0:05:50.00,0:05:51.75,Default,,0,0,0,,- Chắc giờ này cũng sắp tới rồi.\N- Cẩn thận.
Dialogue: 0,0:05:51.92,0:05:52.83,Default,,0,0,0,,- Người đưa thìa cho em,\N- Cảm ơn.
Dialogue: 0,0:05:52.83,0:05:53.68,Default,,0,0,0,,mau đi sửa soạn đi.
Dialogue: 0,0:05:53.68,0:05:54.44,Default,,0,0,0,,Không cần đâu.
Dialogue: 0,0:05:56.27,0:05:57.27,Default,,0,0,0,,- Đúng rồi.\N- Cầm chắc nhé.
Dialogue: 0,0:05:57.27,0:05:57.63,Default,,0,0,0,,Cảm ơn…
Dialogue: 0,0:05:57.63,0:06:00.24,Default,,0,0,0,,Chung Thái nói với em,\Nhôm qua họ đi luyện binh,
Dialogue: 0,0:06:00.48,0:06:02.36,Default,,0,0,0,,- gặp nhị tiểu thư ở ngoại ô.\N- Ngươi cầm chắc nhé.
Dialogue: 0,0:06:02.80,0:06:05.27,Default,,0,0,0,,Ả đanh đá đó còn không chịu\Nbuông tha cho lục điện hạ.
Dialogue: 0,0:06:05.27,0:06:06.39,Default,,0,0,0,,Không được nói xấu người ta.
Dialogue: 0,0:06:07.15,0:06:07.83,Default,,0,0,0,,Không cần cảm ơn.
Dialogue: 0,0:06:08.36,0:06:09.56,Default,,0,0,0,,Nhị muội thành thân rồi,
Dialogue: 0,0:06:09.71,0:06:10.60,Default,,0,0,0,,lần này làm trò càn quấy,
Dialogue: 0,0:06:10.71,0:06:12.92,Default,,0,0,0,,sợ rằng sau này\Ndanh tiếng ở kinh thành càng tệ hơn.
Dialogue: 0,0:06:13.27,0:06:14.71,Default,,0,0,0,,Mấy lời đàm tiếu em nghe được,
Dialogue: 0,0:06:14.83,0:06:16.95,Default,,0,0,0,,cũng đừng nói ra trước mặt cha và tổ mẫu.
Dialogue: 0,0:06:17.39,0:06:18.36,Default,,0,0,0,,Tiểu thư,
Dialogue: 0,0:06:18.48,0:06:20.04,Default,,0,0,0,,- người còn lo lắng cho cô ta làm gì?\N- Không cần cảm ơn.
Dialogue: 0,0:06:20.04,0:06:22.31,Default,,0,0,0,,- Mấy hôm trước cô ta đẩy người xuống hồ\N- Không cần cảm ơn.
Dialogue: 0,0:06:22.31,0:06:23.39,Default,,0,0,0,,làm người nhiễm phong hàn,
Dialogue: 0,0:06:23.56,0:06:25.39,Default,,0,0,0,,chẳng phải lão gia bên đó\Ncũng không phạt cô ta sao?
Dialogue: 0,0:06:26.60,0:06:27.95,Default,,0,0,0,,Sau này không được\Nnhắc lại chuyện này nữa.
Dialogue: 0,0:06:29.04,0:06:30.12,Default,,0,0,0,,- Cầm chắc nhé.\N- Cảm ơn Diệp tiểu thư.
Dialogue: 0,0:06:30.12,0:06:30.68,Default,,0,0,0,,Không cần cảm ơn đâu.
Dialogue: 0,0:06:30.68,0:06:31.51,Default,,0,0,0,,Quét dọn bên này đi.
Dialogue: 0,0:06:31.51,0:06:32.83,Default,,0,0,0,,Lục điện hạ tới.
Dialogue: 0,0:06:59.24,0:07:00.12,Default,,0,0,0,,Ta phải về rồi.
Dialogue: 0,0:07:04.24,0:07:04.88,Default,,0,0,0,,Băng Thường.
Dialogue: 0,0:07:07.19,0:07:08.51,Default,,0,0,0,,Khó khăn lắm chúng ta mới gặp mặt,
Dialogue: 0,0:07:08.75,0:07:09.92,Default,,0,0,0,,mới đó mà muội đã phải về sao?
Dialogue: 0,0:07:10.56,0:07:11.80,Default,,0,0,0,,Đã xế chiều rồi,
Dialogue: 0,0:07:12.00,0:07:12.92,Default,,0,0,0,,ta mà không về,
Dialogue: 0,0:07:13.00,0:07:14.68,Default,,0,0,0,,e là sẽ bị\Ntrưởng bối trong nhà trách mắng,
Dialogue: 0,0:07:15.19,0:07:16.24,Default,,0,0,0,,làm mất nền nếp.
Dialogue: 0,0:07:17.31,0:07:18.95,Default,,0,0,0,,Thời gian này ta luyện binh ở ngoại thành,
Dialogue: 0,0:07:19.36,0:07:21.36,Default,,0,0,0,,hơn nửa số quy định\Ncủa quân doanh nước Thịnh
Dialogue: 0,0:07:21.36,0:07:22.36,Default,,0,0,0,,là do Diệp đại tướng quân đặt ra.
Dialogue: 0,0:07:22.83,0:07:23.71,Default,,0,0,0,,Về đến thành,
Dialogue: 0,0:07:23.71,0:07:25.15,Default,,0,0,0,,vốn muốn nói chuyện với muội nhiều hơn,
Dialogue: 0,0:07:25.63,0:07:26.68,Default,,0,0,0,,nhưng không ngờ,
Dialogue: 0,0:07:27.39,0:07:29.19,Default,,0,0,0,,vẫn vướng quy định của Diệp gia các muội.
Dialogue: 0,0:07:30.83,0:07:31.95,Default,,0,0,0,,Điện hạ nói đùa rồi.
Dialogue: 0,0:07:32.15,0:07:33.15,Default,,0,0,0,,Diệp gia rất có nền nếp,
Dialogue: 0,0:07:33.27,0:07:34.60,Default,,0,0,0,,từ nhỏ Băng Thường đã quen rồi.
Dialogue: 0,0:07:35.04,0:07:36.00,Default,,0,0,0,,Diệp gia có nền nếp đến đâu
Dialogue: 0,0:07:36.00,0:07:37.19,Default,,0,0,0,,cũng không bằng nhị tiểu thư.
Dialogue: 0,0:07:37.44,0:07:38.36,Default,,0,0,0,,Đến cả con tin của nước Cảnh
Dialogue: 0,0:07:38.36,0:07:39.63,Default,,0,0,0,,cũng bị cô ta phạt quỳ trên băng.
Dialogue: 0,0:07:42.27,0:07:43.51,Default,,0,0,0,,Đàm Đài Tẫn bị quỳ trên băng à?
Dialogue: 0,0:07:46.48,0:07:47.92,Default,,0,0,0,,Tuy Đàm Đài Tẫn là con tin,
Dialogue: 0,0:07:48.15,0:07:49.60,Default,,0,0,0,,nhưng cũng là hoàng tử nước Cảnh,
Dialogue: 0,0:07:49.88,0:07:51.63,Default,,0,0,0,,sao Diệp Tịch Vụ có thể sỉ nhục như thế?
Dialogue: 0,0:07:52.07,0:07:52.60,Default,,0,0,0,,Bỏ đi,
Dialogue: 0,0:07:52.68,0:07:54.48,Default,,0,0,0,,không thể nói lý\Nvới hạng người ngang ngược đó được.
Dialogue: 0,0:07:55.39,0:07:56.19,Default,,0,0,0,,Sau khi muội rơi xuống hồ,
Dialogue: 0,0:07:56.19,0:07:57.36,Default,,0,0,0,,sức khỏe còn chưa hồi phục hẳn,
Dialogue: 0,0:07:57.51,0:07:58.92,Default,,0,0,0,,hôm nay muội về nghỉ ngơi sớm đi.
Dialogue: 0,0:08:00.56,0:08:01.15,Default,,0,0,0,,Được,
Dialogue: 0,0:08:01.39,0:08:02.75,Default,,0,0,0,,vậy ta về nghỉ ngơi trước đây.
Dialogue: 0,0:08:07.12,0:08:08.44,Default,,0,0,0,,Phu nhân ác độc của ngươi
Dialogue: 0,0:08:09.07,0:08:10.88,Default,,0,0,0,,đã phạt ngươi quỳ ở đây bốn ngày.
Dialogue: 0,0:08:14.07,0:08:17.51,Default,,0,0,0,,Tiếp tục thế này ngươi sẽ chết thật đó.
Dialogue: 0,0:08:18.60,0:08:20.39,Default,,0,0,0,,Cô ta thật lòng muốn\Ndồn ngươi vào chỗ chết.
Dialogue: 0,0:08:20.95,0:08:22.24,Default,,0,0,0,,Chẳng lẽ ngươi không nhìn ra sao?
Dialogue: 0,0:08:22.83,0:08:23.51,Default,,0,0,0,,Nhị tiểu thư.
Dialogue: 0,0:08:24.39,0:08:25.12,Default,,0,0,0,,Nhị tiểu thư.
Dialogue: 0,0:08:30.92,0:08:31.71,Default,,0,0,0,,Nhị muội muội.
Dialogue: 0,0:08:32.88,0:08:34.43,Default,,0,0,0,,Ta biết vừa nãy ở bên hồ,
Dialogue: 0,0:08:34.79,0:08:35.51,Default,,0,0,0,,muội không cố ý.
Dialogue: 0,0:08:35.51,0:08:36.88,Default,,0,0,0,,Ta cố ý đấy.
Dialogue: 0,0:08:42.55,0:08:43.20,Default,,0,0,0,,Đại tỷ,
Dialogue: 0,0:08:44.08,0:08:45.75,Default,,0,0,0,,hôm nay lục điện hạ tới thăm tỷ,
Dialogue: 0,0:08:45.91,0:08:47.72,Default,,0,0,0,,tỷ ăn mặc trang điểm lộng lẫy thế.
Dialogue: 0,0:08:48.48,0:08:51.43,Default,,0,0,0,,Không ngờ bây giờ lại ướt như chuột lột,
Dialogue: 0,0:08:51.88,0:08:53.03,Default,,0,0,0,,cảm thấy thế nào hả?
Dialogue: 0,0:08:54.72,0:08:55.48,Default,,0,0,0,,Nhị muội muội,
Dialogue: 0,0:08:56.48,0:08:58.20,Default,,0,0,0,,bình thường ta với muội\Nkhông thù không oán,
Dialogue: 0,0:08:58.67,0:09:00.24,Default,,0,0,0,,cần gì phải chèn ép nhau như thế?
Dialogue: 0,0:09:01.96,0:09:03.79,Default,,0,0,0,,Câu này tỷ đi mà nói với lục điện hạ.
Dialogue: 0,0:09:05.55,0:09:06.15,Default,,0,0,0,,Ta thật sự không biết
Dialogue: 0,0:09:06.15,0:09:07.84,Default,,0,0,0,,tỷ đã học thuật mê hoặc gì,
Dialogue: 0,0:09:08.39,0:09:09.79,Default,,0,0,0,,mà khiến lục điện hạ mê mệt tỷ như thế,
Dialogue: 0,0:09:09.79,0:09:11.08,Default,,0,0,0,,làm ngài ấy chẳng ngó ngàng gì đến ta.
Dialogue: 0,0:09:11.43,0:09:13.24,Default,,0,0,0,,Cả tên Đàm Đài Tẫn\Nkhông có đức làm chồng kia nữa,
Dialogue: 0,0:09:13.51,0:09:14.79,Default,,0,0,0,,cũng bị tỷ quyến rũ.
Dialogue: 0,0:09:16.43,0:09:18.12,Default,,0,0,0,,[Nếu hắn đã thích thể hiện như thế,]
Dialogue: 0,0:09:18.12,0:09:19.36,Default,,0,0,0,,[ta sẽ để hắn thể hiện cho đã.]
Dialogue: 0,0:09:19.84,0:09:20.82,Default,,0,0,0,,Có chết cóng,
Dialogue: 0,0:09:20.85,0:09:23.12,Default,,0,0,0,,thì cũng chỉ qua chỗ tổ mẫu\Nbáo một tiếng thôi.
Dialogue: 0,0:09:24.79,0:09:26.43,Default,,0,0,0,,Diệp Băng Thường,\Nta cũng không sợ nói cho tỷ biết,
Dialogue: 0,0:09:27.06,0:09:28.46,Default,,0,0,0,,tỷ có tốn công thế nào
Dialogue: 0,0:09:28.86,0:09:31.02,Default,,0,0,0,,thì chẳng mấy ngày nữa\NĐàm Đài Tẫn chắc chắn sẽ chết.
Dialogue: 0,0:09:33.36,0:09:36.15,Default,,0,0,0,,Miễn là hai người đều không xuất hiện\Ntrước mặt lục điện hạ,
Dialogue: 0,0:09:37.00,0:09:39.36,Default,,0,0,0,,[ngài ấy sẽ chỉ có thể thích ta thôi.]
Dialogue: 0,0:09:40.03,0:09:41.72,Default,,0,0,0,,Đúng là một ả đàn bà ác nghiệt.
Dialogue: 0,0:09:43.91,0:09:44.88,Default,,0,0,0,,Có người qua đây.
Dialogue: 0,0:09:53.48,0:09:54.12,Default,,0,0,0,,Sao trong phủ này
Dialogue: 0,0:09:54.12,0:09:56.00,Default,,0,0,0,,luôn có quạ đen bay tới bay lui vậy?
Dialogue: 0,0:09:56.00,0:09:56.96,Default,,0,0,0,,Đúng là xui xẻo.
Dialogue: 0,0:09:57.96,0:10:00.00,Default,,0,0,0,,Hình như sau khi cô gia tới\Nthì luôn như vậy.
Dialogue: 0,0:10:01.39,0:10:02.60,Default,,0,0,0,,[Mặt trời lại xuống núi rồi.]
Dialogue: 0,0:10:03.15,0:10:04.39,Default,,0,0,0,,[Thời tiết giá rét thế này,]
Dialogue: 0,0:10:04.67,0:10:05.60,Default,,0,0,0,,[nếu còn quỳ tiếp]
Dialogue: 0,0:10:06.00,0:10:07.63,Default,,0,0,0,,[có thể hắn thật sự\Nkhông sống qua được đêm nay.]
Dialogue: 0,0:10:09.55,0:10:10.84,Default,,0,0,0,,[Hắn chết không có gì đáng tiếc]
Dialogue: 0,0:10:11.60,0:10:13.20,Default,,0,0,0,,[nhưng nếu tà cốt thức tỉnh]
Dialogue: 0,0:10:13.36,0:10:14.20,Default,,0,0,0,,[thì rắc rối to.]
Dialogue: 0,0:10:25.00,0:10:26.36,Default,,0,0,0,,Cô gia, xin lỗi nhé.
Dialogue: 0,0:10:26.51,0:10:27.51,Default,,0,0,0,,Thứ cho tiểu nhân mắt kém,
Dialogue: 0,0:10:27.51,0:10:29.63,Default,,0,0,0,,không nhìn thấy\Nngài đang ngắm trăng ở đây.
Dialogue: 0,0:10:29.75,0:10:30.24,Default,,0,0,0,,Đúng thế.
Dialogue: 0,0:10:30.24,0:10:31.84,Default,,0,0,0,,Làm ướt xiêm y của ngài rồi.
Dialogue: 0,0:10:33.39,0:10:36.03,Default,,0,0,0,,Đi thôi…
Dialogue: 0,0:10:45.27,0:10:46.20,Default,,0,0,0,,[Trời lạnh như vậy,]
Dialogue: 0,0:10:46.39,0:10:47.79,Default,,0,0,0,,[Đàm Đài Tẫn hoàn toàn không có tu vi,]
Dialogue: 0,0:10:48.12,0:10:49.15,Default,,0,0,0,,[quần áo lại ướt hết,]
Dialogue: 0,0:10:50.12,0:10:51.00,Default,,0,0,0,,[hắn không chịu nổi mất.]
Dialogue: 0,0:11:22.12,0:11:22.91,Default,,0,0,0,,Nhị tiểu thư,
Dialogue: 0,0:11:23.75,0:11:24.67,Default,,0,0,0,,trời đông giá rét,
Dialogue: 0,0:11:25.48,0:11:26.36,Default,,0,0,0,,cô quay trở vào đi.
Dialogue: 0,0:11:27.91,0:11:31.32,Default,,0,0,0,,Không cần phiền cô đích thân\Ntới giám sát ta chịu phạt đâu.
Dialogue: 0,0:11:35.67,0:11:37.24,Default,,0,0,0,,Ai bảo là ta tới giám sát ngươi?
Dialogue: 0,0:11:39.51,0:11:40.39,Default,,0,0,0,,Ta chỉ…
Dialogue: 0,0:11:42.12,0:11:42.91,Default,,0,0,0,,Ta chỉ…
Dialogue: 0,0:11:43.15,0:11:44.00,Default,,0,0,0,,Chỉ cái gì?
Dialogue: 0,0:11:46.20,0:11:48.00,Default,,0,0,0,,Ta chỉ tới xem ngươi chết hay chưa thôi.
Dialogue: 0,0:11:48.43,0:11:49.91,Default,,0,0,0,,Kẻo ta lại phải nhặt xác cho ngươi.
Dialogue: 0,0:11:53.88,0:11:55.00,Default,,0,0,0,,Dù ta có chết,
Dialogue: 0,0:11:55.91,0:11:58.43,Default,,0,0,0,,cũng đâu phiền tới nhị tiểu thư\Nđích thân tới nhặt xác cho ta.
Dialogue: 0,0:11:58.84,0:12:01.67,Default,,0,0,0,,Trên đời này, người muốn thấy ta\Nchết bất đắc kỳ tử
Dialogue: 0,0:12:02.08,0:12:03.55,Default,,0,0,0,,nhiều hơn sao trên trời.
Dialogue: 0,0:12:04.08,0:12:06.67,Default,,0,0,0,,Nói không chừng đến lúc đó\Nsẽ kéo bè kéo đội
Dialogue: 0,0:12:06.67,0:12:09.08,Default,,0,0,0,,đến tận cửa chúc mừng cô ấy chứ?
Dialogue: 0,0:12:12.00,0:12:13.20,Default,,0,0,0,,Ngươi nghĩ nói như vậy,
Dialogue: 0,0:12:13.60,0:12:14.67,Default,,0,0,0,,ta sẽ thương xót ngươi sao?
Dialogue: 0,0:12:16.08,0:12:17.00,Default,,0,0,0,,Thương xót ta?
Dialogue: 0,0:12:20.20,0:12:20.75,Default,,0,0,0,,[Không được.]
Dialogue: 0,0:12:21.15,0:12:22.51,Default,,0,0,0,,[Tiểu Ma Thần đã lạnh cóng rồi,]
Dialogue: 0,0:12:22.96,0:12:24.24,Default,,0,0,0,,[cứ thế này sẽ chết thật mất.]
Dialogue: 0,0:12:25.91,0:12:26.51,Default,,0,0,0,,[Thôi vậy,]
Dialogue: 0,0:12:26.88,0:12:28.08,Default,,0,0,0,,[sau này ngươi sẽ chịu quả báo.]
Dialogue: 0,0:12:31.36,0:12:32.48,Default,,0,0,0,,Cái áo choàng này xấu chết đi được.
Dialogue: 0,0:12:33.51,0:12:34.32,Default,,0,0,0,,Ta không cần nữa,
Dialogue: 0,0:12:35.12,0:12:35.91,Default,,0,0,0,,tặng ngươi đấy.
Dialogue: 0,0:12:41.72,0:12:42.88,Default,,0,0,0,,Xiêm y của nhị tiểu thư,
Dialogue: 0,0:12:44.36,0:12:45.39,Default,,0,0,0,,ta không dám nhận.
Dialogue: 0,0:12:46.43,0:12:47.91,Default,,0,0,0,,Nếu nhị tiểu thư không thích nữa,
Dialogue: 0,0:12:49.00,0:12:51.08,Default,,0,0,0,,ngày mai bảo Xuân Đào mang đi vứt là được.
Dialogue: 0,0:12:51.36,0:12:51.91,Default,,0,0,0,,Ngươi…
Dialogue: 0,0:12:57.24,0:12:58.67,Default,,0,0,0,,Nhị tiểu thư còn chuyện gì sao?
Dialogue: 0,0:13:02.00,0:13:03.32,Default,,0,0,0,,[Nhìn đi, Lê Tô Tô.]
Dialogue: 0,0:13:03.88,0:13:05.67,Default,,0,0,0,,[Tiểu Ma Thần này vốn vô tình.]
Dialogue: 0,0:13:06.00,0:13:07.20,Default,,0,0,0,,[Rõ ràng ngươi thương xót hắn,]
Dialogue: 0,0:13:07.20,0:13:08.60,Default,,0,0,0,,[hắn còn ăn nói quái gở như thế.]
Dialogue: 0,0:13:09.24,0:13:10.67,Default,,0,0,0,,[Chỉ cần ma đầu này còn hơi thở]
Dialogue: 0,0:13:10.67,0:13:12.24,Default,,0,0,0,,[thì cũng không được\Nđối tốt với hắn chút nào.]
Dialogue: 0,0:13:13.24,0:13:15.48,Default,,0,0,0,,[Có lòng tốt thà đi cho chó ăn,]
Dialogue: 0,0:13:15.48,0:13:16.60,Default,,0,0,0,,[cảm hóa sơn tặc còn hơn.]
Dialogue: 0,0:13:19.75,0:13:21.32,Default,,0,0,0,,[Không nhịn việc nhỏ\Nsẽ làm hỏng việc lớn.]
Dialogue: 0,0:13:21.84,0:13:23.24,Default,,0,0,0,,[Tiểu Ma Thần chết không có gì đáng tiếc,]
Dialogue: 0,0:13:23.96,0:13:25.48,Default,,0,0,0,,[nhưng tính mạng tứ châu tam giới]
Dialogue: 0,0:13:26.00,0:13:27.24,Default,,0,0,0,,[vẫn còn phụ thuộc vào hắn.]
Dialogue: 0,0:13:32.43,0:13:33.08,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:13:35.20,0:13:36.20,Default,,0,0,0,,Ngươi đừng có giả chết.
Dialogue: 0,0:13:36.84,0:13:38.72,Default,,0,0,0,,Đừng tưởng như vậy\Nthì ta sẽ thương hại ngươi.
Dialogue: 0,0:13:41.00,0:13:43.00,Default,,0,0,0,,[Hình như cảnh tượng này quen quen.]
Dialogue: 0,0:13:46.96,0:13:48.43,Default,,0,0,0,,[Chẳng lẽ hắn chết ở đây,]
Dialogue: 0,0:13:48.43,0:13:49.84,Default,,0,0,0,,[sau đó hóa thân thành ma sao?]
Dialogue: 0,0:13:53.60,0:13:56.15,Default,,0,0,0,,Đàm Đài Tẫn…
Dialogue: 0,0:13:56.84,0:13:57.43,Default,,0,0,0,,Tỉnh lại đi.
Dialogue: 0,0:13:58.00,0:13:58.60,Default,,0,0,0,,Xuân Đào.
Dialogue: 0,0:13:59.39,0:14:00.03,Default,,0,0,0,,Xuân Đào.
Dialogue: 0,0:14:03.72,0:14:04.32,Default,,0,0,0,,Tiểu thư,
Dialogue: 0,0:14:05.00,0:14:06.08,Default,,0,0,0,,là người gọi em sao?
Dialogue: 0,0:14:06.27,0:14:07.63,Default,,0,0,0,,Ta gọi em, mau vào đây.
Dialogue: 0,0:14:19.24,0:14:19.88,Default,,0,0,0,,Tiểu thư.
Dialogue: 0,0:14:20.32,0:14:22.51,Default,,0,0,0,,Là người chưa tỉnh hay em chưa tỉnh vậy?
Dialogue: 0,0:14:22.96,0:14:24.20,Default,,0,0,0,,Em nói linh tinh gì vậy?
Dialogue: 0,0:14:24.43,0:14:26.12,Default,,0,0,0,,Mau đi đun nước tắm đi,\Ncàng nhanh càng tốt.
Dialogue: 0,0:14:26.12,0:14:26.91,Default,,0,0,0,,Cứu người quan trọng.
Dialogue: 0,0:14:28.67,0:14:29.60,Default,,0,0,0,,Nhanh lên.
Dialogue: 0,0:14:32.32,0:14:33.20,Default,,0,0,0,,Tiểu… tiểu thư,
Dialogue: 0,0:14:33.51,0:14:37.08,Default,,0,0,0,,sao ban nãy người và cô gia\Nlại ôm nhau vậy?
Dialogue: 0,0:14:37.72,0:14:39.00,Default,,0,0,0,,Bọn ta không phải là phu thê sao?
Dialogue: 0,0:14:39.39,0:14:40.88,Default,,0,0,0,,Phu thê ở nhân gian
Dialogue: 0,0:14:40.88,0:14:42.79,Default,,0,0,0,,chung chăn chung gối\Nlà chuyện đương nhiên mà?
Dialogue: 0,0:14:43.27,0:14:44.03,Default,,0,0,0,,Nhân gian?
Dialogue: 0,0:14:45.20,0:14:46.60,Default,,0,0,0,,Mau đi xem nước tắm có nóng không.
Dialogue: 0,0:14:47.20,0:14:47.79,Default,,0,0,0,,Vâng.
Dialogue: 0,0:14:48.36,0:14:50.00,Default,,0,0,0,,Tiểu thư, nước không nóng nữa.
Dialogue: 0,0:14:54.20,0:14:55.60,Default,,0,0,0,,Xuân Đào, em về nghỉ ngơi trước đi.
Dialogue: 0,0:14:55.96,0:14:56.84,Default,,0,0,0,,Vâng, thưa tiểu thư.
Dialogue: 0,0:15:03.88,0:15:07.20,Default,,0,0,0,,[Những vết thương này\Nlà bị Diệp Tịch Vụ đánh sao?]
Dialogue: 0,0:15:10.96,0:15:13.08,Default,,0,0,0,,[Sớm biết Tiểu Ma Thần yếu ớt thế này,]
Dialogue: 0,0:15:13.79,0:15:14.55,Default,,0,0,0,,[ta đã không lấy]
Dialogue: 0,0:15:14.55,0:15:16.27,Default,,0,0,0,,[tương lai của tam giới tứ châu\Nra làm vật đánh cược]
Dialogue: 0,0:15:16.63,0:15:18.00,Default,,0,0,0,,[chỉ để giận dỗi hắn.]
Dialogue: 0,0:15:20.48,0:15:21.79,Default,,0,0,0,,[Mau hồi phục lại đi.]
Dialogue: 0,0:15:22.51,0:15:24.72,Default,,0,0,0,,[Xin ngươi đấy, ngươi là Ma Thần mà.]
Dialogue: 0,0:15:25.79,0:15:28.75,Default,,0,0,0,,[Vì tam giới tứ châu,\Nngươi không thể chết được.]
Dialogue: 0,0:15:29.84,0:15:32.96,Default,,0,0,0,,[Đàm Đài Tẫn, ngươi thật đáng thương.]
Dialogue: 0,0:15:35.43,0:15:36.24,Default,,0,0,0,,Lại là ngươi.
Dialogue: 0,0:15:36.79,0:15:38.43,Default,,0,0,0,,Mỗi lần ta sắp chết,
Dialogue: 0,0:15:39.20,0:15:40.20,Default,,0,0,0,,ngươi đều sẽ xuất hiện.
Dialogue: 0,0:15:40.20,0:15:41.63,Default,,0,0,0,,[Ta luôn ở đây.]
Dialogue: 0,0:15:45.39,0:15:46.20,Default,,0,0,0,,Ta biết,
Dialogue: 0,0:15:47.88,0:15:49.51,Default,,0,0,0,,ngươi ở trong cơ thể ta.
Dialogue: 0,0:15:51.55,0:15:52.55,Default,,0,0,0,,Ngươi muốn nó sao?
Dialogue: 0,0:15:53.24,0:15:56.27,Default,,0,0,0,,[Vẫn chưa đến lúc, đừng nóng vội.]
Dialogue: 0,0:15:57.36,0:15:58.60,Default,,0,0,0,,Phải đợi đến khi nào?
Dialogue: 0,0:15:59.00,0:16:00.91,Default,,0,0,0,,[Ngươi không đợi được nữa sao?]
Dialogue: 0,0:16:03.24,0:16:03.96,Default,,0,0,0,,[Đúng vậy,]
Dialogue: 0,0:16:05.12,0:16:07.79,Default,,0,0,0,,[hơn hai mươi năm nay,\Nthân xác này đã cho ngươi thứ gì?]
Dialogue: 0,0:16:08.43,0:16:10.51,Default,,0,0,0,,[Chỉ có đau đớn, đói khát,]
Dialogue: 0,0:16:10.51,0:16:12.32,Default,,0,0,0,,[lạnh lẽo, nhục nhã,]
Dialogue: 0,0:16:12.91,0:16:14.84,Default,,0,0,0,,[còn bị kẻ khác trói buộc.]
Dialogue: 0,0:16:16.24,0:16:18.96,Default,,0,0,0,,[Rồi sẽ có ngày\Nngươi có thể thoát khỏi thân xác này,]
Dialogue: 0,0:16:18.96,0:16:21.15,Default,,0,0,0,,[dâng hiến linh hồn cho ta.]
Dialogue: 0,0:16:22.03,0:16:25.63,Default,,0,0,0,,[Sau đó, ngươi sẽ có được\Nsự bình yên mãi mãi.]
Dialogue: 0,0:16:29.27,0:16:30.12,Default,,0,0,0,,Chẳng sao cả.
Dialogue: 0,0:16:31.15,0:16:32.51,Default,,0,0,0,,Bất kể là thân xác này
Dialogue: 0,0:16:33.39,0:16:34.51,Default,,0,0,0,,hay là linh hồn gì đó,
Dialogue: 0,0:16:35.08,0:16:36.08,Default,,0,0,0,,nếu ngươi muốn,
Dialogue: 0,0:16:36.79,0:16:38.36,Default,,0,0,0,,có thể lấy đi bất cứ lúc nào.
Dialogue: 0,0:16:40.27,0:16:41.43,Default,,0,0,0,,Ta không tiếc.
Dialogue: 0,0:16:42.43,0:16:44.79,Default,,0,0,0,,[Đàm Đài Tẫn, nhẫn nại chút.]
Dialogue: 0,0:16:45.60,0:16:47.67,Default,,0,0,0,,[Ngươi phải nếm trải hết\Nđau khổ của nhân gian,]
Dialogue: 0,0:16:47.67,0:16:49.72,Default,,0,0,0,,[hấp thu oán hận vô tận.]
Dialogue: 0,0:16:50.08,0:16:51.91,Default,,0,0,0,,[Lời nguyền định mệnh mà ngươi gánh chịu]
Dialogue: 0,0:16:51.91,0:16:53.67,Default,,0,0,0,,[định sẵn ngươi không được chết yên lành.]
Dialogue: 0,0:16:54.55,0:16:56.39,Default,,0,0,0,,[Khi nào ngươi đau khổ tới tột cùng,]
Dialogue: 0,0:16:56.39,0:16:58.36,Default,,0,0,0,,[sinh mệnh đi đến hồi kết,]
Dialogue: 0,0:16:58.63,0:17:01.72,Default,,0,0,0,,[ta sẽ tới nhận sự hiến tế của ngươi.]
Dialogue: 0,0:17:03.72,0:17:06.23,Default,,0,0,0,,[Hóa ra 500 năm trước,]
Dialogue: 0,0:17:06.23,0:17:08.12,Default,,0,0,0,,[mặt trăng ở nhân gian lại sáng như vậy.]
Dialogue: 0,0:17:09.19,0:17:10.63,Default,,0,0,0,,[Đáng tiếc từ khi Ma Thần giáng thế,]
Dialogue: 0,0:17:10.63,0:17:11.99,Default,,0,0,0,,[khắp nơi đều là khí đục.]
Dialogue: 0,0:17:12.67,0:17:14.76,Default,,0,0,0,,[Đã lâu lắm rồi\Nmình không nhìn thấy mặt trăng nữa.]
Dialogue: 0,0:17:19.36,0:17:21.88,Default,,0,0,0,,[Sinh ra là ma thai, thân mang tà cốt,]
Dialogue: 0,0:17:24.28,0:17:26.23,Default,,0,0,0,,[rốt cuộc tà cốt này từ đâu mà có,]
Dialogue: 0,0:17:26.39,0:17:27.43,Default,,0,0,0,,[trông như thế nào?]
Dialogue: 0,0:17:32.15,0:17:34.63,Default,,0,0,0,,[Rốt cuộc khúc nào mới là tà cốt?]
Dialogue: 0,0:17:37.12,0:17:39.36,Default,,0,0,0,,[Không sờ ra khúc xương nào\Ncó gì bất thường.]
Dialogue: 0,0:17:50.56,0:17:51.56,Default,,0,0,0,,Cô đang làm gì vậy?
Dialogue: 0,0:17:55.63,0:17:56.36,Default,,0,0,0,,Ngươi tỉnh rồi à?
Dialogue: 0,0:18:01.56,0:18:02.28,Default,,0,0,0,,Diệp Tịch Vụ,
Dialogue: 0,0:18:03.47,0:18:04.91,Default,,0,0,0,,cô lại đang giở trò gì thế?
Dialogue: 0,0:18:08.80,0:18:10.23,Default,,0,0,0,,Ngươi quan tâm ta giở trò gì làm gì?
Dialogue: 0,0:18:10.67,0:18:12.67,Default,,0,0,0,,Nếu ngươi tỉnh rồi\Nthì mau dậy mặc quần áo đi.
Dialogue: 0,0:18:13.12,0:18:14.52,Default,,0,0,0,,Đừng ngâm trong nước giả chết nữa.
Dialogue: 0,0:18:45.60,0:18:46.39,Default,,0,0,0,,Đi đâu đấy?
Dialogue: 0,0:18:47.91,0:18:48.76,Default,,0,0,0,,Ra hồ,
Dialogue: 0,0:18:49.04,0:18:49.99,Default,,0,0,0,,trời vẫn chưa sáng.
Dialogue: 0,0:18:52.67,0:18:53.56,Default,,0,0,0,,Ngươi không được đi.
Dialogue: 0,0:18:55.60,0:18:56.43,Default,,0,0,0,,Ngươi đứng lại cho ta.
Dialogue: 0,0:19:01.12,0:19:02.08,Default,,0,0,0,,Hôm nay không được đi,
Dialogue: 0,0:19:02.71,0:19:03.84,Default,,0,0,0,,sau này cũng không cần đi nữa.
Dialogue: 0,0:19:08.52,0:19:09.32,Default,,0,0,0,,Tại sao?
Dialogue: 0,0:19:11.60,0:19:12.76,Default,,0,0,0,,Ngươi là người của ta,
Dialogue: 0,0:19:13.19,0:19:15.15,Default,,0,0,0,,suốt ngày quỳ bên ngoài,\Nngười đến người đi,
Dialogue: 0,0:19:15.36,0:19:16.52,Default,,0,0,0,,chẳng phải là làm ta mất mặt sao?
Dialogue: 0,0:19:18.28,0:19:19.43,Default,,0,0,0,,Vậy thì thật sự xin lỗi.
Dialogue: 0,0:19:22.28,0:19:23.63,Default,,0,0,0,,Ta mệt rồi, ta muốn đi ngủ.
Dialogue: 0,0:19:23.80,0:19:24.76,Default,,0,0,0,,Ngươi đừng nói chuyện với ta.
Dialogue: 0,0:19:32.56,0:19:33.23,Default,,0,0,0,,[Cha ơi,]
Dialogue: 0,0:19:33.52,0:19:35.36,Default,,0,0,0,,[lúc mọi người đưa con qua đây,\Nchắc chắn không thể ngờ được,]
Dialogue: 0,0:19:36.28,0:19:40.84,Default,,0,0,0,,[con gái của cha\Nphải ngủ chung chăn với Ma Thần.]
Dialogue: 0,0:19:56.08,0:19:57.15,Default,,0,0,0,,Ngươi đứng đấy làm gì?
Dialogue: 0,0:19:57.84,0:19:58.67,Default,,0,0,0,,Mau làm đi,
Dialogue: 0,0:19:59.32,0:20:00.88,Default,,0,0,0,,làm xong ta cũng muốn đi ngủ.
Dialogue: 0,0:20:07.95,0:20:08.76,Default,,0,0,0,,Làm gì vậy?
Dialogue: 0,0:20:09.12,0:20:11.15,Default,,0,0,0,,Tất nhiên là làm chuyện\Nmà ngày nào cô cũng muốn làm.
Dialogue: 0,0:20:11.95,0:20:13.71,Default,,0,0,0,,Cô không nhớ à?
Dialogue: 0,0:20:14.56,0:20:15.23,Default,,0,0,0,,[Không hay rồi.]
Dialogue: 0,0:20:15.91,0:20:17.19,Default,,0,0,0,,[Tuyệt đối không thể để hắn phát hiện ra.]
Dialogue: 0,0:20:20.56,0:20:21.43,Default,,0,0,0,,Ta nhớ chứ.
Dialogue: 0,0:20:21.80,0:20:22.99,Default,,0,0,0,,Sao ta có thể quên được?
Dialogue: 0,0:20:24.32,0:20:26.23,Default,,0,0,0,,Ngươi chờ ta một chút, ta hơi khát.
Dialogue: 0,0:20:27.91,0:20:28.91,Default,,0,0,0,,Xuân… Xuân Đào,
Dialogue: 0,0:20:29.19,0:20:30.15,Default,,0,0,0,,ta muốn uống trà.
Dialogue: 0,0:20:35.39,0:20:37.32,Default,,0,0,0,,Xuân Đào, em mau nói cho ta biết,
Dialogue: 0,0:20:37.32,0:20:39.56,Default,,0,0,0,,mỗi tối ta và Đàm Đài Tẫn
Dialogue: 0,0:20:39.56,0:20:40.43,Default,,0,0,0,,đều phải làm chuyện gì vậy?
Dialogue: 0,0:20:40.95,0:20:41.80,Default,,0,0,0,,Đánh ngài ấy.
Dialogue: 0,0:20:45.80,0:20:47.84,Default,,0,0,0,,Từ khi tiểu thư gả cho cô gia
Dialogue: 0,0:20:48.19,0:20:49.15,Default,,0,0,0,,thì bực bội trong lòng,
Dialogue: 0,0:20:49.15,0:20:50.52,Default,,0,0,0,,thế nên mỗi tối trước khi ngủ
Dialogue: 0,0:20:50.52,0:20:52.99,Default,,0,0,0,,đều phải quất roi cô gia một trận\Nmới hả giận.
Dialogue: 0,0:20:54.71,0:20:56.19,Default,,0,0,0,,Thế chẳng phải biến thái sao?
Dialogue: 0,0:20:58.84,0:20:59.84,Default,,0,0,0,,Roi để đâu rồi?
Dialogue: 0,0:21:00.84,0:21:02.80,Default,,0,0,0,,Để ở dưới đệm của tiểu thư đó.
Dialogue: 0,0:21:11.84,0:21:12.95,Default,,0,0,0,,[Phải quất bao nhiêu cái?]
Dialogue: 0,0:21:14.60,0:21:15.88,Default,,0,0,0,,[Chuyện này thì không nói chính xác được,]
Dialogue: 0,0:21:16.19,0:21:17.60,Default,,0,0,0,,[phải xem tâm trạng của tiểu thư thôi.]
Dialogue: 0,0:21:23.28,0:21:24.71,Default,,0,0,0,,[Roi dài thế này,]
Dialogue: 0,0:21:25.39,0:21:27.56,Default,,0,0,0,,[Diệp Tịch Vụ,\Ncô quả đúng là kẻ biến thái.]
Dialogue: 0,0:21:32.88,0:21:33.60,Default,,0,0,0,,[Lê Tô Tô,]
Dialogue: 0,0:21:34.08,0:21:36.08,Default,,0,0,0,,[trước đây ngươi trảm yêu trừ ma\Ncòn không chớp mắt,]
Dialogue: 0,0:21:36.43,0:21:38.12,Default,,0,0,0,,[quất roi thì có gì\Nmà không ra tay được chứ?]
Dialogue: 0,0:21:41.71,0:21:42.43,Default,,0,0,0,,[Roi này,]
Dialogue: 0,0:21:43.28,0:21:45.52,Default,,0,0,0,,[ngươi hãy chịu thay\NMa Thần 500 năm sau đi.]
Dialogue: 0,0:21:49.36,0:21:50.04,Default,,0,0,0,,[Ma Thần,]
Dialogue: 0,0:21:51.15,0:21:52.71,Default,,0,0,0,,[đây đều là chuyện ngươi đáng phải chịu.]
Dialogue: 0,0:22:18.67,0:22:19.47,Default,,0,0,0,,[Lê Tô Tô,]
Dialogue: 0,0:22:19.91,0:22:21.08,Default,,0,0,0,,[rốt cuộc ngươi đang làm gì vậy?]
Dialogue: 0,0:22:23.99,0:22:25.39,Default,,0,0,0,,[Bây giờ hắn còn chưa phải Ma Thần,]
Dialogue: 0,0:22:25.95,0:22:27.91,Default,,0,0,0,,[mặc cho người ta đánh mắng,\Nnhẫn nhục chịu đựng.]
Dialogue: 0,0:22:29.36,0:22:31.15,Default,,0,0,0,,[Bắt nạt hắn, hành hạ hắn,]
Dialogue: 0,0:22:31.76,0:22:33.36,Default,,0,0,0,,[là có thể ngăn cản Ma Thần giáng thế ư?]
Dialogue: 0,0:22:34.36,0:22:35.04,Default,,0,0,0,,[Như vậy,]
Dialogue: 0,0:22:35.99,0:22:37.95,Default,,0,0,0,,[sẽ chỉ khiến ngươi khó chịu hơn thôi.]
Dialogue: 0,0:22:50.91,0:22:51.67,Default,,0,0,0,,Ta mệt rồi,
Dialogue: 0,0:22:52.15,0:22:53.15,Default,,0,0,0,,hôm nay không đánh nổi nữa.
Dialogue: 0,0:22:54.23,0:22:54.99,Default,,0,0,0,,Ngủ đi.
Dialogue: 0,0:24:06.43,0:24:07.19,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:24:11.04,0:24:11.71,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:24:16.56,0:24:17.28,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:24:18.23,0:24:18.95,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:24:19.47,0:24:20.19,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:24:22.67,0:24:23.36,Default,,0,0,0,,[Nóng quá.]
Dialogue: 0,0:24:24.32,0:24:24.95,Default,,0,0,0,,[Toi rồi,]
Dialogue: 0,0:24:25.04,0:24:26.56,Default,,0,0,0,,[quỳ dưới trời đông tuyết phủ bốn hôm,]
Dialogue: 0,0:24:26.88,0:24:28.12,Default,,0,0,0,,[còn chịu nhiều roi như vậy,]
Dialogue: 0,0:24:28.56,0:24:30.12,Default,,0,0,0,,[cơ thể người phàm làm sao chịu nổi?]
Dialogue: 0,0:24:30.80,0:24:31.84,Default,,0,0,0,,[Lê Tô Tô ơi Lê Tô Tô,]
Dialogue: 0,0:24:31.84,0:24:33.15,Default,,0,0,0,,[lần này ngươi gây họa lớn rồi.]
Dialogue: 0,0:24:48.67,0:24:49.28,Default,,0,0,0,,Xuân Đào.
Dialogue: 0,0:24:52.91,0:24:53.56,Default,,0,0,0,,Xuân Đào.
Dialogue: 0,0:24:54.84,0:24:56.04,Default,,0,0,0,,Xuân Đào, em ngủ chưa?
Dialogue: 0,0:24:57.23,0:24:57.84,Default,,0,0,0,,Xuân Đào.
Dialogue: 0,0:25:03.95,0:25:04.63,Default,,0,0,0,,Tiểu thư,
Dialogue: 0,0:25:04.91,0:25:06.19,Default,,0,0,0,,đã sắc xong thuốc cho cô gia rồi.
Dialogue: 0,0:25:06.19,0:25:07.60,Default,,0,0,0,,Người còn căn dặn gì nữa không?
Dialogue: 0,0:25:08.04,0:25:08.84,Default,,0,0,0,,Hết rồi.
Dialogue: 0,0:25:09.12,0:25:10.60,Default,,0,0,0,,Lần này thật sự sẽ không gọi em nữa đâu.
Dialogue: 0,0:25:13.76,0:25:14.63,Default,,0,0,0,,Em đi ngủ đi…
Dialogue: 0,0:25:25.15,0:25:25.91,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:25:27.43,0:25:28.19,Default,,0,0,0,,Đàm Đài Tẫn.
Dialogue: 0,0:25:38.88,0:25:41.04,Default,,0,0,0,,Nào, uống thuốc.
Dialogue: 0,0:25:56.12,0:25:58.15,Default,,0,0,0,,[Tiểu Ma Thần đã sốt đến mơ hồ rồi,]
Dialogue: 0,0:26:00.23,0:26:02.56,Default,,0,0,0,,[cũng không biết thảo dược nhân gian\Ncó tác dụng không.]
Dialogue: 0,0:26:03.43,0:26:04.04,Default,,0,0,0,,Há miệng.
Dialogue: 0,0:26:21.08,0:26:22.28,Default,,0,0,0,,Sao vẫn nóng như vậy?
Dialogue: 0,0:26:29.84,0:26:31.12,Default,,0,0,0,,[Hồi nhỏ mình bị sốt,]
Dialogue: 0,0:26:31.67,0:26:33.71,Default,,0,0,0,,[cha đã đắp khăn lạnh cho mình như vậy.]
Dialogue: 0,0:26:49.71,0:26:51.15,Default,,0,0,0,,Cuối cùng ngươi cũng tỉnh rồi.
Dialogue: 0,0:26:52.28,0:26:53.95,Default,,0,0,0,,Ta biết cách này\Nchắc chắn sẽ có tác dụng mà.
Dialogue: 0,0:26:58.47,0:26:59.19,Default,,0,0,0,,Được rồi,
Dialogue: 0,0:26:59.47,0:27:00.47,Default,,0,0,0,,ngươi nghỉ ngơi đi,
Dialogue: 0,0:27:01.15,0:27:01.95,Default,,0,0,0,,ta đi ngủ đây.
Dialogue: 0,0:27:04.08,0:27:05.47,Default,,0,0,0,,Đúng là ta mắc nợ ngươi mà.
Dialogue: 0,0:27:29.71,0:27:31.28,Default,,0,0,0,,[Nữ nhân này ra ngoài dâng hương,]
Dialogue: 0,0:27:32.12,0:27:33.39,Default,,0,0,0,,[chẳng lẽ trúng tà,]
Dialogue: 0,0:27:34.12,0:27:35.36,Default,,0,0,0,,[bị thứ gì nhập vào người rồi ư?]
Dialogue: 0,0:27:38.82,0:27:44.42,Default,,0,0,0,,[Diệp Phủ]
Dialogue: 0,0:28:11.32,0:28:11.95,Default,,0,0,0,,Tiểu thư.
Dialogue: 0,0:28:12.23,0:28:13.47,Default,,0,0,0,,Tối qua vất vả đến nửa đêm,
Dialogue: 0,0:28:13.47,0:28:14.95,Default,,0,0,0,,sao không nghỉ thêm một lát?
Dialogue: 0,0:28:19.67,0:28:20.67,Default,,0,0,0,,Đàm Đài Tẫn đâu?
Dialogue: 0,0:28:21.23,0:28:22.19,Default,,0,0,0,,Ngoài chịu phạt
Dialogue: 0,0:28:22.32,0:28:24.23,Default,,0,0,0,,thì bình thường cô gia sẽ đến\NTàng Thư Lâu chép kinh.
Dialogue: 0,0:28:24.60,0:28:25.80,Default,,0,0,0,,Hôm nay đã đi từ sớm rồi.
Dialogue: 0,0:28:27.95,0:28:28.84,Default,,0,0,0,,[Đàm Đài Tẫn,]
Dialogue: 0,0:28:29.36,0:28:31.80,Default,,0,0,0,,[ngươi không chối được,\Ncũng không trốn được ơn cứu mạng này đâu.]
Dialogue: 0,0:28:31.95,0:28:33.19,Default,,0,0,0,,[Nhớ kỹ cho ta.]
Dialogue: 0,0:28:33.76,0:28:36.08,Default,,0,0,0,,[Sẽ có ngày\Nngươi phải lấy mạng ra đền đấy.]
Dialogue: 0,0:28:37.47,0:28:38.71,Default,,0,0,0,,Giờ nào rồi?
Dialogue: 0,0:28:38.71,0:28:39.80,Default,,0,0,0,,Sắp đến giờ Ngọ rồi ạ.
Dialogue: 0,0:28:40.08,0:28:41.71,Default,,0,0,0,,Lão thái thái, lão gia, đại thiếu gia
Dialogue: 0,0:28:41.71,0:28:42.91,Default,,0,0,0,,đã đến nhà ăn rồi ạ.
Dialogue: 0,0:28:55.28,0:28:56.43,Default,,0,0,0,,Chào nhị tiểu thư.
Dialogue: 0,0:28:58.91,0:28:59.60,Default,,0,0,0,,[Những người này đều là]
Dialogue: 0,0:28:59.60,0:29:01.76,Default,,0,0,0,,[người thân sớm chiều ở bên Diệp Tịch Vụ.]
Dialogue: 0,0:29:02.80,0:29:03.99,Default,,0,0,0,,[Muốn ở lại Diệp Phủ]
Dialogue: 0,0:29:03.99,0:29:05.43,Default,,0,0,0,,[thì phải qua được cửa ải này mới ổn.]
Dialogue: 0,0:29:08.84,0:29:11.28,Default,,0,0,0,,[Vị này hẳn là\Nđại tướng quân Trụ Quốc của nước Thịnh,]
Dialogue: 0,0:29:11.28,0:29:12.36,Default,,0,0,0,,[cha của Diệp Tịch Vụ.]
Dialogue: 0,0:29:14.15,0:29:16.23,Default,,0,0,0,,[Vị này hẳn là đại công tử của Diệp gia,]
Dialogue: 0,0:29:16.23,0:29:17.47,Default,,0,0,0,,[đại ca của Diệp Tịch Vụ.]
Dialogue: 0,0:29:18.39,0:29:19.43,Default,,0,0,0,,[Còn mấy vị này]
Dialogue: 0,0:29:19.43,0:29:21.39,Default,,0,0,0,,[chắc chính là các di nương\Ncủa Diệp Tịch Vụ.]
Dialogue: 0,0:29:24.12,0:29:25.60,Default,,0,0,0,,[Người trông lộng lẫy sang trọng này]
Dialogue: 0,0:29:25.80,0:29:27.19,Default,,0,0,0,,[hẳn là tổ mẫu của Diệp gia.]
Dialogue: 0,0:29:27.19,0:29:27.76,Default,,0,0,0,,Tổ mẫu.
Dialogue: 0,0:29:27.76,0:29:29.08,Default,,0,0,0,,Con có chuyện gì thế hả?
Dialogue: 0,0:29:30.63,0:29:31.71,Default,,0,0,0,,Nhìn Xuân Đào làm gì?
Dialogue: 0,0:29:32.23,0:29:34.12,Default,,0,0,0,,Lát nữa cả Xuân Đào cũng bị phạt cùng.
Dialogue: 0,0:29:34.47,0:29:35.12,Default,,0,0,0,,[Toi rồi,]
Dialogue: 0,0:29:35.12,0:29:36.67,Default,,0,0,0,,[Diệp Tịch Vụ là kẻ chuyên gây họa,]
Dialogue: 0,0:29:36.67,0:29:37.95,Default,,0,0,0,,[thế này là lại gây ra họa gì nữa đây?]
Dialogue: 0,0:29:37.95,0:29:38.47,Default,,0,0,0,,Lại đây.
Dialogue: 0,0:29:42.80,0:29:44.95,Default,,0,0,0,,[Toi rồi, không phải\Nsắp bị vụt tay đấy chứ?]
Dialogue: 0,0:29:47.95,0:29:50.32,Default,,0,0,0,,Con muốn làm ta lo chết đấy à?
Dialogue: 0,0:29:50.71,0:29:51.84,Default,,0,0,0,,Trời lạnh thế này,
Dialogue: 0,0:29:51.84,0:29:54.32,Default,,0,0,0,,mà con còn chẳng mặc y phục chắn gió,
Dialogue: 0,0:29:54.43,0:29:56.43,Default,,0,0,0,,chạy tới chạy lui ở ngoài.
Dialogue: 0,0:29:56.63,0:29:57.47,Default,,0,0,0,,Mấy đứa xem này,
Dialogue: 0,0:29:57.47,0:29:59.84,Default,,0,0,0,,nó mặc toàn thứ gì đây chứ?
Dialogue: 0,0:30:01.32,0:30:03.32,Default,,0,0,0,,Bé con đáng thương của ta,
Dialogue: 0,0:30:03.36,0:30:04.28,Default,,0,0,0,,bên cạnh con
Dialogue: 0,0:30:04.28,0:30:07.47,Default,,0,0,0,,không có ai biết quan tâm hết.
Dialogue: 0,0:30:07.84,0:30:10.84,Default,,0,0,0,,Tới cuối cùng vẫn là người nhà thương con.
Dialogue: 0,0:30:12.91,0:30:13.47,Default,,0,0,0,,Nào,
Dialogue: 0,0:30:14.91,0:30:17.12,Default,,0,0,0,,mặc cái này vào sẽ hết lạnh.
Dialogue: 0,0:30:19.47,0:30:21.15,Default,,0,0,0,,[May chỉ là lo sợ thừa thôi.]
Dialogue: 0,0:30:23.23,0:30:24.80,Default,,0,0,0,,Như vậy mới ra dáng.
Dialogue: 0,0:30:25.28,0:30:25.91,Default,,0,0,0,,Xuân Đào,
Dialogue: 0,0:30:25.91,0:30:28.76,Default,,0,0,0,,ra nhà kho lấy vài tấm da,
Dialogue: 0,0:30:28.76,0:30:32.47,Default,,0,0,0,,làm thêm y phục mùa đông\Ncho tiểu thư nhà ngươi.
Dialogue: 0,0:30:32.60,0:30:33.15,Default,,0,0,0,,Dạ.
Dialogue: 0,0:30:33.47,0:30:34.12,Default,,0,0,0,,Tổ mẫu,
Dialogue: 0,0:30:34.63,0:30:35.95,Default,,0,0,0,,con cũng muốn một chiếc áo lông bạch hồ.
Dialogue: 0,0:30:36.47,0:30:37.23,Default,,0,0,0,,Muốn à?
Dialogue: 0,0:30:38.63,0:30:39.84,Default,,0,0,0,,Đi xin cha con ấy.
Dialogue: 0,0:30:40.36,0:30:42.39,Default,,0,0,0,,Cha, con muốn áo lông bạch hồ.
Dialogue: 0,0:30:43.19,0:30:43.95,Default,,0,0,0,,Muốn cái con khỉ.
Dialogue: 0,0:30:44.76,0:30:45.47,Default,,0,0,0,,Diệp Trạch Vũ,
Dialogue: 0,0:30:45.71,0:30:46.67,Default,,0,0,0,,con còn có mặt mũi mà nói nữa.
Dialogue: 0,0:30:46.95,0:30:48.23,Default,,0,0,0,,Con là trưởng tử Diệp gia,
Dialogue: 0,0:30:48.47,0:30:49.76,Default,,0,0,0,,không biết tập võ luyện kiếm
Dialogue: 0,0:30:49.95,0:30:51.15,Default,,0,0,0,,như nhị đệ của con,
Dialogue: 0,0:30:51.15,0:30:53.56,Default,,0,0,0,,trấn thủ biên cương, làm nên sự nghiệp.
Dialogue: 0,0:30:53.95,0:30:55.67,Default,,0,0,0,,Con chỉ biết cưỡi ngựa săn bắn, vui chơi
Dialogue: 0,0:30:55.67,0:30:56.95,Default,,0,0,0,,với đám bạn tệ hại của con.
Dialogue: 0,0:30:57.47,0:30:58.63,Default,,0,0,0,,Với cái tính nết đấy của con
Dialogue: 0,0:30:59.47,0:31:02.32,Default,,0,0,0,,thì có mấy cô nương tử tế ở Thịnh Đô\Nthích con chứ?
Dialogue: 0,0:31:03.95,0:31:05.36,Default,,0,0,0,,- [Người cha này hung dữ quá.]\N- Đồ ăn sắp nguội rồi,
Dialogue: 0,0:31:05.60,0:31:06.36,Default,,0,0,0,,mau ăn đi.
Dialogue: 0,0:31:07.60,0:31:08.56,Default,,0,0,0,,Bé con,
Dialogue: 0,0:31:09.15,0:31:10.91,Default,,0,0,0,,ra ngồi cạnh cha con đi.
Dialogue: 0,0:31:14.28,0:31:14.91,Default,,0,0,0,,Đi đi.
Dialogue: 0,0:31:15.08,0:31:15.47,Default,,0,0,0,,Dạ.
Dialogue: 0,0:31:15.47,0:31:16.32,Default,,0,0,0,,Từ từ thôi.
Dialogue: 0,0:31:19.84,0:31:20.39,Default,,0,0,0,,Cha.
Dialogue: 0,0:31:24.39,0:31:24.95,Default,,0,0,0,,Bé con,
Dialogue: 0,0:31:26.15,0:31:27.43,Default,,0,0,0,,mau nếm thử xem.
Dialogue: 0,0:31:28.47,0:31:30.08,Default,,0,0,0,,Cha biết tâm trạng con không tốt
Dialogue: 0,0:31:30.08,0:31:31.60,Default,,0,0,0,,nên cố tình dặn nhà bếp
Dialogue: 0,0:31:31.60,0:31:33.15,Default,,0,0,0,,nấu mấy món con thích đấy.
Dialogue: 0,0:31:33.76,0:31:34.91,Default,,0,0,0,,Cha nghe đám hạ nhân nói,
Dialogue: 0,0:31:34.91,0:31:36.08,Default,,0,0,0,,tối qua con vừa ngâm mình
Dialogue: 0,0:31:36.08,0:31:37.08,Default,,0,0,0,,vừa sắc thuốc,
Dialogue: 0,0:31:37.08,0:31:38.08,Default,,0,0,0,,vất vả cả đêm.
Dialogue: 0,0:31:38.08,0:31:39.60,Default,,0,0,0,,Chắc chắn con tốn sức lắm.
Dialogue: 0,0:31:39.60,0:31:41.12,Default,,0,0,0,,Con phải ăn nhiều vào mới được.
Dialogue: 0,0:31:41.36,0:31:42.43,Default,,0,0,0,,Đúng đó, này.
Dialogue: 0,0:31:42.80,0:31:43.95,Default,,0,0,0,,Nào, ăn nhiều vào.
Dialogue: 0,0:31:44.71,0:31:45.47,Default,,0,0,0,,Ăn nhiều thịt đi, ăn nhiều vào.
Dialogue: 0,0:31:45.47,0:31:45.95,Default,,0,0,0,,Ăn món này này.
Dialogue: 0,0:31:45.95,0:31:47.23,Default,,0,0,0,,Tuyệt đối đừng để bụng nhé.
Dialogue: 0,0:31:47.23,0:31:47.84,Default,,0,0,0,,[Đây…]
Dialogue: 0,0:31:48.36,0:31:49.80,Default,,0,0,0,,Nào, nào, món này nữa.
Dialogue: 0,0:31:49.80,0:31:52.32,Default,,0,0,0,,[là tình thân ở nhân gian\Nđược viết trong sách.]
Dialogue: 0,0:31:52.84,0:31:54.04,Default,,0,0,0,,Mấy món này nấu cho con đó,
Dialogue: 0,0:31:54.04,0:31:55.15,Default,,0,0,0,,đều là món con thích.
Dialogue: 0,0:31:55.47,0:31:56.47,Default,,0,0,0,,[Cha, người yên tâm,]
Dialogue: 0,0:31:57.12,0:31:58.36,Default,,0,0,0,,[người nhà ở đây rất tốt với con.]
Dialogue: 0,0:31:58.36,0:31:59.36,Default,,0,0,0,,Canh đậu phụ tươi lắm.
Dialogue: 0,0:31:59.71,0:32:00.91,Default,,0,0,0,,[Giống như cha vậy.]
Dialogue: 0,0:32:01.80,0:32:05.19,Default,,0,0,0,,Hôm qua ta nghe đại phu nhân\Nphủ An Định hầu nói,
Dialogue: 0,0:32:05.32,0:32:08.47,Default,,0,0,0,,chuyện bé con đẩy Băng Thường xuống nước
Dialogue: 0,0:32:08.88,0:32:11.19,Default,,0,0,0,,đã lan truyền khắp kinh thành rồi.
Dialogue: 0,0:32:11.36,0:32:13.08,Default,,0,0,0,,Khắp nơi đều đang bàn tán.
Dialogue: 0,0:32:13.39,0:32:15.08,Default,,0,0,0,,Bàn tán thì bàn tán, chúng ta sợ họ chắc?
Dialogue: 0,0:32:15.08,0:32:17.08,Default,,0,0,0,,Không tốt cho thanh danh của con bé.
Dialogue: 0,0:32:17.32,0:32:18.47,Default,,0,0,0,,Nghịch thì nghịch,
Dialogue: 0,0:32:18.71,0:32:20.63,Default,,0,0,0,,bé con đã xuất giá rồi mà.
Dialogue: 0,0:32:20.88,0:32:21.47,Default,,0,0,0,,Cha,
Dialogue: 0,0:32:21.76,0:32:23.63,Default,,0,0,0,,năm ngoái lúc nhị muội chưa xuất giá,
Dialogue: 0,0:32:23.63,0:32:25.52,Default,,0,0,0,,cha nói: "Nghịch thì nghịch,
Dialogue: 0,0:32:25.52,0:32:26.60,Default,,0,0,0,,sau này gả đi
Dialogue: 0,0:32:26.60,0:32:28.08,Default,,0,0,0,,có muốn nghịch cũng không được nữa."
Dialogue: 0,0:32:28.80,0:32:30.12,Default,,0,0,0,,Sao giờ nhị muội có xuất giá hay không
Dialogue: 0,0:32:30.12,0:32:31.47,Default,,0,0,0,,thì cũng luôn đúng thế?
Dialogue: 0,0:32:31.47,0:32:32.08,Default,,0,0,0,,Im đi,
Dialogue: 0,0:32:32.32,0:32:33.12,Default,,0,0,0,,ăn cơm của con đi.
Dialogue: 0,0:32:33.80,0:32:35.47,Default,,0,0,0,,[Diệp Tịch Vụ ơi Diệp Tịch Vụ,]
Dialogue: 0,0:32:35.76,0:32:36.39,Default,,0,0,0,,[ta đã biết]
Dialogue: 0,0:32:36.39,0:32:38.08,Default,,0,0,0,,[vì sao cái nết cô lại thế này rồi.]
Dialogue: 0,0:32:39.23,0:32:40.76,Default,,0,0,0,,Mấy ngày qua con đã nghĩ,
Dialogue: 0,0:32:41.43,0:32:42.67,Default,,0,0,0,,đẩy đại tỷ xuống nước
Dialogue: 0,0:32:42.67,0:32:43.84,Default,,0,0,0,,là lỗi của con.
Dialogue: 0,0:32:44.12,0:32:46.43,Default,,0,0,0,,Hôm nay con muốn đi xin lỗi tỷ ấy.
Dialogue: 0,0:32:49.88,0:32:50.56,Default,,0,0,0,,Mẫu thân,
Dialogue: 0,0:32:51.36,0:32:53.12,Default,,0,0,0,,bây giờ bé con trưởng thành rồi,
Dialogue: 0,0:32:53.80,0:32:55.12,Default,,0,0,0,,hiểu chuyện quá đi.
Dialogue: 0,0:32:55.39,0:32:56.76,Default,,0,0,0,,- [Thế đã là hiểu chuyện rồi à?]\N- Bé con của chúng ta
Dialogue: 0,0:32:56.76,0:32:59.47,Default,,0,0,0,,vừa lương thiện, vừa có trách nhiệm.
Dialogue: 0,0:32:59.63,0:33:01.80,Default,,0,0,0,,Không hổ là con cháu Diệp gia ta.
Dialogue: 0,0:33:03.19,0:33:06.12,Default,,0,0,0,,[Đúng là sắp chiều hư Diệp Tịch Vụ rồi.]
Dialogue: 0,0:33:07.84,0:33:12.23,Default,,0,0,0,,Nhưng ta thấy không cần xin lỗi đâu.
Dialogue: 0,0:33:12.67,0:33:14.76,Default,,0,0,0,,Lỡ Băng Thường vẫn chưa khỏi bệnh,
Dialogue: 0,0:33:14.76,0:33:15.71,Default,,0,0,0,,để lây cho con
Dialogue: 0,0:33:16.32,0:33:17.60,Default,,0,0,0,,thì không hay.
Dialogue: 0,0:33:17.95,0:33:18.76,Default,,0,0,0,,Không sao đâu, tổ mẫu.
Dialogue: 0,0:33:18.76,0:33:19.63,Default,,0,0,0,,Tổ mẫu nói đúng.
Dialogue: 0,0:33:22.91,0:33:25.23,Default,,0,0,0,,Nếu nhị muội tới xin lỗi ta,
Dialogue: 0,0:33:25.76,0:33:27.88,Default,,0,0,0,,tức là đánh giá thấp\Ntình cảm tỷ muội chúng ta rồi.
Dialogue: 0,0:33:27.88,0:33:28.47,Default,,0,0,0,,Đại tỷ.
Dialogue: 0,0:33:28.80,0:33:29.80,Default,,0,0,0,,Nhị muội ngồi đi.
Dialogue: 0,0:33:30.63,0:33:31.32,Default,,0,0,0,,Tổ mẫu,
Dialogue: 0,0:33:31.47,0:33:32.36,Default,,0,0,0,,tại con không tốt.
Dialogue: 0,0:33:32.60,0:33:33.76,Default,,0,0,0,,Mấy ngày nay bị ốm,
Dialogue: 0,0:33:33.76,0:33:35.67,Default,,0,0,0,,không thể tới thỉnh an\Ntổ mẫu và phụ thân được.
Dialogue: 0,0:33:35.88,0:33:37.71,Default,,0,0,0,,Hôm nay, con phát cháo xong về tắm rửa,
Dialogue: 0,0:33:37.71,0:33:39.19,Default,,0,0,0,,không ngờ lại tới muộn.
Dialogue: 0,0:33:39.36,0:33:41.60,Default,,0,0,0,,Con quấy rầy bữa ăn của mọi người,\Nđúng là đáng phạt.
Dialogue: 0,0:33:46.95,0:33:47.63,Default,,0,0,0,,Bé con,
Dialogue: 0,0:33:47.84,0:33:48.76,Default,,0,0,0,,con nghe chưa?
Dialogue: 0,0:33:49.32,0:33:52.47,Default,,0,0,0,,Tỷ tỷ con đã nói rồi,\Nkhông cần đi xin lỗi.
Dialogue: 0,0:33:54.80,0:33:55.47,Default,,0,0,0,,Băng Thường,
Dialogue: 0,0:33:56.28,0:33:58.36,Default,,0,0,0,,ra ngồi cạnh Trạch Vũ đi.
Dialogue: 0,0:33:59.15,0:33:59.95,Default,,0,0,0,,Đa tạ tổ mẫu.
Dialogue: 0,0:34:11.51,0:34:12.59,Default,,0,0,0,,[Thảo nào đại sư huynh…]
Dialogue: 0,0:34:13.16,0:34:13.72,Default,,0,0,0,,[không,]
Dialogue: 0,0:34:14.03,0:34:16.20,Default,,0,0,0,,[Tiêu Lẫm và Đàm Đài Tẫn đều thích cô ấy.]
Dialogue: 0,0:34:16.88,0:34:18.11,Default,,0,0,0,,[Mỹ nhân]
Dialogue: 0,0:34:18.64,0:34:21.64,Default,,0,0,0,,[vừa dịu dàng, vừa tốt bụng như vậy,]
Dialogue: 0,0:34:22.47,0:34:23.59,Default,,0,0,0,,[ai lại không thích chứ?]
Dialogue: 0,0:34:32.28,0:34:33.39,Default,,0,0,0,,Đàm Đài Tẫn đâu?
Dialogue: 0,0:34:33.39,0:34:34.51,Default,,0,0,0,,Sao hắn không tới ăn?
Dialogue: 0,0:34:56.47,0:34:58.59,Default,,0,0,0,,Ngươi coi mình là chủ thật đấy à?
Dialogue: 0,0:34:58.95,0:35:03.68,Default,,0,0,0,,Ngươi không thể chỉ ăn mà không làm chứ?
Dialogue: 0,0:35:04.36,0:35:06.43,Default,,0,0,0,,Đúng đó, không thể không làm việc được.
Dialogue: 0,0:35:07.20,0:35:07.76,Default,,0,0,0,,Sao nào?
Dialogue: 0,0:35:07.95,0:35:08.76,Default,,0,0,0,,Sao à?
Dialogue: 0,0:35:10.72,0:35:11.43,Default,,0,0,0,,Ngươi nhìn đi,
Dialogue: 0,0:35:11.43,0:35:14.07,Default,,0,0,0,,huynh đệ bọn ta vất vả cả chiều
Dialogue: 0,0:35:14.07,0:35:15.16,Default,,0,0,0,,mà vẫn còn một đống bát đũa
Dialogue: 0,0:35:15.39,0:35:17.11,Default,,0,0,0,,chủ nhân dùng chưa rửa kìa.
Dialogue: 0,0:35:17.36,0:35:19.76,Default,,0,0,0,,Ta thấy ngày nào ngài cũng rảnh,
Dialogue: 0,0:35:19.95,0:35:21.11,Default,,0,0,0,,nên phiền ngài,
Dialogue: 0,0:35:21.59,0:35:24.80,Default,,0,0,0,,rửa hết đống bát đũa kia rồi mới ăn.
Dialogue: 0,0:35:24.80,0:35:25.72,Default,,0,0,0,,- Được không?\N- Đúng đó.
Dialogue: 0,0:35:25.72,0:35:26.47,Default,,0,0,0,,Đúng đó.
Dialogue: 0,0:35:26.47,0:35:27.47,Default,,0,0,0,,Nhờ ngài nhé, cô gia.
Dialogue: 0,0:35:27.47,0:35:28.32,Default,,0,0,0,,Cô gia, mời.
Dialogue: 0,0:35:29.32,0:35:29.91,Default,,0,0,0,,Đi đi.
Dialogue: 0,0:35:30.07,0:35:31.20,Default,,0,0,0,,Cô gia vất vả quá.
Dialogue: 0,0:35:31.51,0:35:32.43,Default,,0,0,0,,Nào, các huynh đệ,
Dialogue: 0,0:35:32.64,0:35:33.64,Default,,0,0,0,,ăn cơm thôi.
Dialogue: 0,0:35:33.64,0:35:35.32,Default,,0,0,0,,Lại đây, ăn cơm thôi.
Dialogue: 0,0:35:35.39,0:35:36.24,Default,,0,0,0,,Tới ngay…
Dialogue: 0,0:35:37.72,0:35:38.32,Default,,0,0,0,,Xới giúp ta.
Dialogue: 0,0:35:38.39,0:35:39.03,Default,,0,0,0,,Đưa ta, đưa nồi cho ta.
Dialogue: 0,0:35:39.03,0:35:39.80,Default,,0,0,0,,Nào, để ta tự làm.
Dialogue: 0,0:35:39.80,0:35:40.24,Default,,0,0,0,,Nào, của ngươi.
Dialogue: 0,0:35:40.24,0:35:40.95,Default,,0,0,0,,Được rồi, đưa ta.
Dialogue: 0,0:35:40.95,0:35:41.59,Default,,0,0,0,,Đúng thật là.
Dialogue: 0,0:35:42.39,0:35:43.16,Default,,0,0,0,,Đây, của ngươi.
Dialogue: 0,0:35:44.47,0:35:45.03,Default,,0,0,0,,Nào.
Dialogue: 0,0:35:46.72,0:35:48.64,Default,,0,0,0,,Vậy là từ lúc Đàm Đài Tẫn vào phủ
Dialogue: 0,0:35:48.64,0:35:50.39,Default,,0,0,0,,vẫn chưa từng ăn cơm cùng chúng ta,
Dialogue: 0,0:35:50.47,0:35:52.39,Default,,0,0,0,,mà ăn với hạ nhân ở nhà bếp à?
Dialogue: 0,0:35:52.95,0:35:53.84,Default,,0,0,0,,Đúng ạ.
Dialogue: 0,0:35:54.07,0:35:55.47,Default,,0,0,0,,Tiểu thư ghét ngài ấy như vậy,
Dialogue: 0,0:35:55.47,0:35:57.59,Default,,0,0,0,,nhìn thấy ngài ấy là không muốn ăn.
Dialogue: 0,0:35:57.88,0:35:59.55,Default,,0,0,0,,Nhưng em nghe nói,
Dialogue: 0,0:35:59.55,0:36:01.76,Default,,0,0,0,,bình thường cô gia cũng không được ăn no.
Dialogue: 0,0:36:02.36,0:36:04.64,Default,,0,0,0,,Đám hạ nhân nhìn thái độ chủ nhân\Nmà làm việc,
Dialogue: 0,0:36:04.64,0:36:06.39,Default,,0,0,0,,bình thường tiểu thư làm thế nào
Dialogue: 0,0:36:06.39,0:36:07.91,Default,,0,0,0,,thì họ cũng làm vậy.
Dialogue: 0,0:36:17.32,0:36:18.36,Default,,0,0,0,,[Ma đầu này,]
Dialogue: 0,0:36:18.99,0:36:20.32,Default,,0,0,0,,[cho nhịn đói vài bữa cũng đáng.]
Dialogue: 0,0:36:21.55,0:36:23.47,Default,,0,0,0,,[Nhưng hắn suốt ngày né tránh mình,]
Dialogue: 0,0:36:23.72,0:36:24.95,Default,,0,0,0,,[sao mình để mắt tới hắn được?]
Dialogue: 0,0:36:26.16,0:36:27.07,Default,,0,0,0,,Nhà bếp ở đâu?
Dialogue: 0,0:36:34.43,0:36:35.32,Default,,0,0,0,,Ta nói các ngươi nghe,
Dialogue: 0,0:36:36.28,0:36:37.47,Default,,0,0,0,,có một số người
Dialogue: 0,0:36:38.43,0:36:40.24,Default,,0,0,0,,có thân phận chủ nhân,
Dialogue: 0,0:36:40.43,0:36:41.72,Default,,0,0,0,,nhưng bổn phận thì là nô tài.
Dialogue: 0,0:36:43.39,0:36:44.36,Default,,0,0,0,,Đúng đó.
Dialogue: 0,0:36:44.36,0:36:45.32,Default,,0,0,0,,Như vậy gọi là gì nhỉ?
Dialogue: 0,0:36:46.47,0:36:47.88,Default,,0,0,0,,Thân phận cao quý, số phận thấp kém.
Dialogue: 0,0:36:48.84,0:36:50.20,Default,,0,0,0,,Thân phận cao quý, số phận thấp kém.
Dialogue: 0,0:36:50.32,0:36:52.39,Default,,0,0,0,,Sống còn không bằng huynh đệ chúng ta nữa.
Dialogue: 0,0:36:52.39,0:36:52.99,Default,,0,0,0,,Đúng không?
Dialogue: 0,0:36:53.39,0:36:53.99,Default,,0,0,0,,Đúng đó.
Dialogue: 0,0:36:53.99,0:36:55.11,Default,,0,0,0,,Nào, chúng ta ăn đi.
Dialogue: 0,0:36:55.11,0:36:55.68,Default,,0,0,0,,Nào, ăn.
Dialogue: 0,0:36:55.68,0:36:56.43,Default,,0,0,0,,Ăn đi…
Dialogue: 0,0:36:56.43,0:36:57.11,Default,,0,0,0,,Món này ngon này.
Dialogue: 0,0:36:58.20,0:36:58.88,Default,,0,0,0,,Ngon thật đấy.
Dialogue: 0,0:37:00.07,0:37:01.95,Default,,0,0,0,,Các ngươi nói xem, người như hắn
Dialogue: 0,0:37:03.16,0:37:04.47,Default,,0,0,0,,sống có ý nghĩa gì?
Dialogue: 0,0:37:04.80,0:37:06.84,Default,,0,0,0,,Ta thấy chẳng thà chết đi cho rồi.
Dialogue: 0,0:37:07.24,0:37:08.68,Default,,0,0,0,,[Bình thường Diệp Tịch Vụ]
Dialogue: 0,0:37:08.95,0:37:10.32,Default,,0,0,0,,[dung túng cho đám hạ nhân]
Dialogue: 0,0:37:10.32,0:37:11.59,Default,,0,0,0,,[làm khó Đàm Đài Tẫn thế này.]
Dialogue: 0,0:37:11.99,0:37:13.07,Default,,0,0,0,,Đúng đó, chết đi cho rồi.
Dialogue: 0,0:37:13.07,0:37:14.24,Default,,0,0,0,,Chết còn tốt hơn.
Dialogue: 0,0:37:24.91,0:37:25.55,Default,,0,0,0,,Đi đi.
Dialogue: 0,0:37:28.39,0:37:28.95,Default,,0,0,0,,Ăn đi.
Dialogue: 0,0:37:31.39,0:37:32.84,Default,,0,0,0,,Ruồi ở đâu ra đấy?
Dialogue: 0,0:37:34.16,0:37:36.16,Default,,0,0,0,,Mùa đông lấy đâu ra ruồi?
Dialogue: 0,0:37:41.95,0:37:42.64,Default,,0,0,0,,Sao thế?
Dialogue: 0,0:37:43.11,0:37:43.91,Default,,0,0,0,,Có chuyện gì à?
Dialogue: 0,0:37:45.03,0:37:45.95,Default,,0,0,0,,Uống nước đi…
Dialogue: 0,0:37:47.91,0:37:48.59,Default,,0,0,0,,Không sao chứ?
Dialogue: 0,0:37:49.80,0:37:50.43,Default,,0,0,0,,Không sao chứ?
Dialogue: 0,0:37:57.20,0:37:58.07,Default,,0,0,0,,Ăn phải ruồi.
Dialogue: 0,0:37:58.88,0:38:00.28,Default,,0,0,0,,Ta không ăn nữa, các ngươi ăn đi.
Dialogue: 0,0:38:00.47,0:38:01.47,Default,,0,0,0,,Các ngươi ăn đi…
Dialogue: 0,0:38:01.47,0:38:02.59,Default,,0,0,0,,- Các ngươi ăn trước đi.\N- Chúng ta ăn tiếp.
Dialogue: 0,0:38:02.68,0:38:03.51,Default,,0,0,0,,Ngươi ngồi bên này.
Dialogue: 0,0:38:05.95,0:38:06.95,Default,,0,0,0,,Xong việc.
Dialogue: 0,0:38:06.95,0:38:07.80,Default,,0,0,0,,Đen quá.
Dialogue: 0,0:38:08.76,0:38:09.32,Default,,0,0,0,,Đi.
Dialogue: 0,0:38:09.88,0:38:10.59,Default,,0,0,0,,Nhị tiểu thư.
Dialogue: 0,0:38:10.99,0:38:12.11,Default,,0,0,0,,- Nhị tiểu thư.\N- Sao người lại tới đây?
Dialogue: 0,0:38:12.36,0:38:13.68,Default,,0,0,0,,Đàm Đài Tẫn kia…
Dialogue: 0,0:38:13.68,0:38:15.28,Default,,0,0,0,,Đàm Đài Tẫn làm gì sai
Dialogue: 0,0:38:15.51,0:38:16.84,Default,,0,0,0,,mà các ngươi xúi hắn chết?
Dialogue: 0,0:38:18.59,0:38:19.28,Default,,0,0,0,,Tiểu thư,
Dialogue: 0,0:38:19.76,0:38:22.36,Default,,0,0,0,,vừa nãy ta nhờ cô gia rửa bát.
Dialogue: 0,0:38:22.47,0:38:24.47,Default,,0,0,0,,Trong thùng đó toàn là băng vụn
Dialogue: 0,0:38:24.47,0:38:26.36,Default,,0,0,0,,tối qua bọn ta đập ra từ trong hồ.
Dialogue: 0,0:38:27.43,0:38:27.99,Default,,0,0,0,,Đúng rồi,
Dialogue: 0,0:38:27.99,0:38:30.84,Default,,0,0,0,,bọn ta còn tiện tay hất ướt người cô gia.
Dialogue: 0,0:38:31.11,0:38:32.11,Default,,0,0,0,,Tối qua hắn không chết cóng,
Dialogue: 0,0:38:32.11,0:38:33.91,Default,,0,0,0,,nhưng hôm nay\Nbắt hắn rửa bát thêm một lúc,
Dialogue: 0,0:38:34.03,0:38:35.91,Default,,0,0,0,,kiểu gì cũng khiến đầu ngón tay tê cứng.
Dialogue: 0,0:38:36.80,0:38:38.80,Default,,0,0,0,,Hơn nữa hôm nay chưa cho hắn ăn,
Dialogue: 0,0:38:38.91,0:38:40.24,Default,,0,0,0,,chỉ để lại thùng nước vo gạo cho hắn.
Dialogue: 0,0:38:42.80,0:38:43.80,Default,,0,0,0,,Mọi ngày các ngươi
Dialogue: 0,0:38:44.07,0:38:45.32,Default,,0,0,0,,cũng ức hiếp người khác thế à?
Dialogue: 0,0:38:46.36,0:38:47.64,Default,,0,0,0,,Con người không phân chia sang hèn.
Dialogue: 0,0:38:48.28,0:38:49.88,Default,,0,0,0,,Nhưng có người tự nguyện hạ thấp mình
Dialogue: 0,0:38:49.88,0:38:51.20,Default,,0,0,0,,làm nô tài cả đời,
Dialogue: 0,0:38:51.20,0:38:52.39,Default,,0,0,0,,vẫn muốn đạp lên người khác
Dialogue: 0,0:38:52.39,0:38:53.47,Default,,0,0,0,,để kiếm niềm vui nho nhỏ.
Dialogue: 0,0:38:54.07,0:38:55.24,Default,,0,0,0,,Các ngươi nhìn người khác sống khốn khổ
Dialogue: 0,0:38:55.24,0:38:56.47,Default,,0,0,0,,thì vui thế sao?
Dialogue: 0,0:38:58.11,0:39:00.11,Default,,0,0,0,,Tiểu thư, người đừng cho là thật.
Dialogue: 0,0:39:00.39,0:39:02.68,Default,,0,0,0,,Bọn ta chỉ muốn trút giận\Nthay nhị tiểu thư.
Dialogue: 0,0:39:02.68,0:39:04.59,Default,,0,0,0,,Bọn ta tuyệt đối không hai lòng với người.
Dialogue: 0,0:39:06.80,0:39:08.91,Default,,0,0,0,,Hôm nay, ngươi dám\Nnói với Đàm Đài Tẫn như vậy
Dialogue: 0,0:39:09.16,0:39:10.80,Default,,0,0,0,,chỉ là bắt nạt vì hắn không có chỗ dựa.
Dialogue: 0,0:39:11.11,0:39:12.39,Default,,0,0,0,,Một ngày nào đó Diệp gia sa sút,
Dialogue: 0,0:39:12.84,0:39:14.51,Default,,0,0,0,,có phải các ngươi cũng dám nói lời này
Dialogue: 0,0:39:14.51,0:39:15.55,Default,,0,0,0,,với cha, tổ mẫu và ta không?
Dialogue: 0,0:39:15.76,0:39:16.55,Default,,0,0,0,,Không ạ…
Dialogue: 0,0:39:16.55,0:39:18.11,Default,,0,0,0,,Tiểu nhân không dám…
Dialogue: 0,0:39:18.43,0:39:19.47,Default,,0,0,0,,Nhị tiểu thư dạy phải.
Dialogue: 0,0:39:19.47,0:39:20.59,Default,,0,0,0,,Nhị tiểu thư dạy phải.
Dialogue: 0,0:39:20.59,0:39:21.76,Default,,0,0,0,,Nhị tiểu thư dạy phải.
Dialogue: 0,0:39:21.76,0:39:23.36,Default,,0,0,0,,- Nhị tiểu thư dạy phải.\N- Dạy có lý ạ.
Dialogue: 0,0:39:23.36,0:39:24.59,Default,,0,0,0,,Nhị tiểu thư dạy phải.
Dialogue: 0,0:39:35.84,0:39:36.72,Default,,0,0,0,,Ngươi đừng ăn thứ này.
Dialogue: 0,0:39:39.91,0:39:40.68,Default,,0,0,0,,Nhị tiểu thư,
Dialogue: 0,0:39:41.24,0:39:42.88,Default,,0,0,0,,con người không ăn thì sẽ chết.
Dialogue: 0,0:39:48.36,0:39:49.76,Default,,0,0,0,,Những thứ này không sạch.
Dialogue: 0,0:39:50.20,0:39:50.72,Default,,0,0,0,,Không biết
Dialogue: 0,0:39:50.72,0:39:51.95,Default,,0,0,0,,đám người ở kia đã cho gì vào đó.
Dialogue: 0,0:39:51.95,0:39:53.24,Default,,0,0,0,,Ngươi ăn vào sẽ sinh bệnh đấy.
Dialogue: 0,0:39:54.84,0:39:56.68,Default,,0,0,0,,Ta còn ăn thứ bẩn thỉu hơn rồi.
Dialogue: 0,0:39:58.99,0:40:00.43,Default,,0,0,0,,Vừa nãy họ nói với ngươi như vậy
Dialogue: 0,0:40:00.84,0:40:02.36,Default,,0,0,0,,mà ngươi không biết\Nphản bác lấy một câu à?
Dialogue: 0,0:40:02.68,0:40:04.80,Default,,0,0,0,,Ngươi là con của quân vương\Nmà lại để mặc đám người hầu sỉ nhục,
Dialogue: 0,0:40:05.07,0:40:06.88,Default,,0,0,0,,ngươi không có chút tự trọng nào hay sao?
Dialogue: 0,0:40:10.47,0:40:11.64,Default,,0,0,0,,Lòng tự trọng ư?
Dialogue: 0,0:40:14.51,0:40:16.59,Default,,0,0,0,,Thứ đó chẳng có nghĩa lý gì với ta.
Dialogue: 0,0:40:17.68,0:40:18.91,Default,,0,0,0,,So với lòng tự trọng,
Dialogue: 0,0:40:21.32,0:40:23.20,Default,,0,0,0,,thì bát cơm này quan trọng hơn.
Dialogue: 0,0:40:31.11,0:40:31.88,Default,,0,0,0,,Diệp Tịch Vụ.
Dialogue: 0,0:40:33.24,0:40:33.99,Default,,0,0,0,,Ngươi đi theo ta.
Dialogue: 0,0:40:35.36,0:40:37.72,Default,,0,0,0,,Không có miếng cơm này, có thể ta sẽ chết,
Dialogue: 0,0:40:38.36,0:40:39.80,Default,,0,0,0,,nếu có lòng tự trọng
Dialogue: 0,0:40:40.68,0:40:42.36,Default,,0,0,0,,thì ta đã chẳng sống được tới bây giờ.
Dialogue: 0,0:40:45.28,0:40:47.03,Default,,0,0,0,,Bớt phí lời đi, đi theo ta.
Dialogue: 0,0:40:51.07,0:40:52.07,Default,,0,0,0,,Ăn bát cơm này đi,
Dialogue: 0,0:40:52.36,0:40:53.76,Default,,0,0,0,,rồi làm gì thì làm.
Dialogue: 0,0:40:54.20,0:40:56.24,Default,,0,0,0,,Đừng tối ngày ốm yếu bệnh tật,\Ngầy trơ xương,
Dialogue: 0,0:40:57.47,0:40:58.99,Default,,0,0,0,,bất cẩn một tẹo là chết vì bệnh.
Dialogue: 0,0:41:12.32,0:41:13.39,Default,,0,0,0,,Nhị tiểu thư đã dùng trò này
Dialogue: 0,0:41:13.39,0:41:14.64,Default,,0,0,0,,một lần rồi.
Dialogue: 0,0:41:15.36,0:41:17.59,Default,,0,0,0,,Nếu ta lại mắc mưu thì đúng là đáng đời.
Dialogue: 0,0:41:18.64,0:41:20.59,Default,,0,0,0,,Nhị tiểu thư, thứ lỗi cho ta không tiếp.
Dialogue: 0,0:41:21.43,0:41:22.07,Default,,0,0,0,,Ngồi xuống.
Dialogue: 0,0:41:23.88,0:41:24.76,Default,,0,0,0,,Chiêu trò gì?
Dialogue: 0,0:41:25.36,0:41:26.36,Default,,0,0,0,,Ngươi nói rõ ra xem nào.
Dialogue: 0,0:41:29.36,0:41:31.84,Default,,0,0,0,,Ban nãy nhị tiểu thư\Nhỏi ta có lòng tự trọng không,
Dialogue: 0,0:41:32.24,0:41:33.32,Default,,0,0,0,,e là nhị tiểu thư
Dialogue: 0,0:41:33.32,0:41:35.76,Default,,0,0,0,,cũng chẳng có thứ này đâu nhỉ?
Dialogue: 0,0:41:37.43,0:41:38.11,Default,,0,0,0,,Được thôi,
Dialogue: 0,0:41:39.03,0:41:40.16,Default,,0,0,0,,nếu cô bảo ta nói,
Dialogue: 0,0:41:40.55,0:41:41.91,Default,,0,0,0,,thì ta sẽ nói lại lần nữa.
Dialogue: 0,0:41:43.76,0:41:45.68,Default,,0,0,0,,Được, nói đi.
Dialogue: 0,0:41:46.59,0:41:48.91,Default,,0,0,0,,Nửa năm trước, ở cung yến Thất Tịch,
Dialogue: 0,0:41:49.84,0:41:52.20,Default,,0,0,0,,tỷ tỷ của cô và Tiêu Lẫm\Ngặp nhau trong cung,
Dialogue: 0,0:41:52.88,0:41:53.99,Default,,0,0,0,,nắm tay dạo chơi hoa viên,
Dialogue: 0,0:41:54.99,0:41:55.84,Default,,0,0,0,,còn cô thì sao?
Dialogue: 0,0:41:56.28,0:41:58.72,Default,,0,0,0,,Cô lại một lòng muốn chia rẽ bọn họ,
Dialogue: 0,0:41:58.95,0:41:59.99,Default,,0,0,0,,độc chiếm Tiêu Lẫm.
Dialogue: 0,0:42:01.32,0:42:03.55,Default,,0,0,0,,Không biết từ đâu cô đã lấy được\Nmột loại thuốc mê
Dialogue: 0,0:42:03.99,0:42:05.91,Default,,0,0,0,,tên là Kết Xuân Tằm,
Dialogue: 0,0:42:06.47,0:42:08.24,Default,,0,0,0,,chuẩn bị chuốc cho tiểu thư Băng Thường
Dialogue: 0,0:42:08.24,0:42:09.84,Default,,0,0,0,,và ngũ điện hạ Tiêu Lương,
Dialogue: 0,0:42:10.55,0:42:14.03,Default,,0,0,0,,muốn hai người họ gạo nấu thành cơm.
Dialogue: 0,0:42:14.47,0:42:17.03,Default,,0,0,0,,- [Không ngờ hôm đó, Tiêu Lương bị ta cản lại.]\N- Ngũ điện hạ.
Dialogue: 0,0:42:17.03,0:42:18.80,Default,,0,0,0,,Hôm nay trong cung mở tiệc,
Dialogue: 0,0:42:18.80,0:42:22.07,Default,,0,0,0,,ngay cả cung nữ, thái giám\Ncũng được ăn mặn theo,
Dialogue: 0,0:42:22.20,0:42:25.99,Default,,0,0,0,,không phải ngươi vẫn đói bụng đấy chứ?
Dialogue: 0,0:42:27.16,0:42:27.80,Default,,0,0,0,,Thôi vậy,
Dialogue: 0,0:42:28.32,0:42:30.76,Default,,0,0,0,,ai bảo xưa nay ta có lòng dạ Bồ Tát chứ.
Dialogue: 0,0:42:31.99,0:42:34.47,Default,,0,0,0,,Ta ban cho ngươi miếng điểm tâm này đấy.
Dialogue: 0,0:42:35.51,0:42:36.47,Default,,0,0,0,,Đa tạ ngũ điện hạ.
Dialogue: 0,0:42:38.68,0:42:39.99,Default,,0,0,0,,Thật không khéo.
Dialogue: 0,0:42:40.80,0:42:42.47,Default,,0,0,0,,Không biết dạo này\Nngươi có nghe nói không,
Dialogue: 0,0:42:42.47,0:42:44.91,Default,,0,0,0,,gần đây nước Cảnh và nước Thịnh\Nnhiều lần giao chiến,
Dialogue: 0,0:42:45.43,0:42:49.20,Default,,0,0,0,,nếu phụ vương được ai nhắc nhở\Nmà nhớ ra ngươi,
Dialogue: 0,0:42:49.32,0:42:51.36,Default,,0,0,0,,thì nói không chừng sẽ giết ngươi
Dialogue: 0,0:42:51.84,0:42:53.55,Default,,0,0,0,,để tế cờ cũng nên.
Dialogue: 0,0:43:01.07,0:43:01.72,Default,,0,0,0,,Ta quên,
Dialogue: 0,0:43:02.11,0:43:04.36,Default,,0,0,0,,ngươi thích ăn vụn một chút nhỉ?
Dialogue: 0,0:43:20.88,0:43:21.76,Default,,0,0,0,,Đủ vụn chưa?
Dialogue: 0,0:43:22.80,0:43:23.43,Default,,0,0,0,,Đủ rồi.
Dialogue: 0,0:43:43.84,0:43:45.11,Default,,0,0,0,,[Nhưng ta mới ăn không lâu,]
Dialogue: 0,0:43:45.59,0:43:47.03,Default,,0,0,0,,[đã thấy hoa mắt chóng mặt.]
Dialogue: 0,0:43:50.95,0:43:53.64,Default,,0,0,0,,[Lúc đó, cô đột nhiên xuất hiện\Nôm lấy ta.]
Dialogue: 0,0:44:10.84,0:44:13.76,Default,,0,0,0,,[Ta không cẩn thận ăn nhầm\NKết Xuân Tằm của ngũ điện hạ,]
Dialogue: 0,0:44:16.43,0:44:17.36,Default,,0,0,0,,[trùng hợp thế nào,]
Dialogue: 0,0:44:18.28,0:44:19.51,Default,,0,0,0,,[phần của Diệp Băng Thường]
Dialogue: 0,0:44:19.64,0:44:21.80,Default,,0,0,0,,[cũng bị cô ăn mất.]
Dialogue: 0,0:44:26.72,0:44:28.91,Default,,0,0,0,,[Trong cung\Ncó rất nhiều người chứng kiến,]
Dialogue: 0,0:44:29.39,0:44:32.88,Default,,0,0,0,,[Diệp tướng quân chỉ đành xin ý chỉ\Nban hôn cho hai ta.]
Dialogue: 0,0:44:33.28,0:44:36.76,Default,,0,0,0,,Đích nữ Diệp thị\Ncủa đại tướng quân Trụ Quốc
Dialogue: 0,0:44:37.43,0:44:41.88,Default,,0,0,0,,và tam hoàng tử Đàm Đài Tẫn\Ncủa nước Cảnh trời sinh một đôi,
Dialogue: 0,0:44:42.20,0:44:45.80,Default,,0,0,0,,nay hạ chỉ ban hôn kết làm phu thê.
Dialogue: 0,0:44:53.20,0:44:56.88,Default,,0,0,0,,Sau đó, cô nói hết\Nngọn nguồn việc này với ta,
Dialogue: 0,0:44:57.47,0:44:58.20,Default,,0,0,0,,rồi từ đó,
Dialogue: 0,0:44:59.68,0:45:02.55,Default,,0,0,0,,cô lấy việc trêu chọc,\Ngiày vò ta làm thú vui,
Dialogue: 0,0:45:03.16,0:45:06.91,Default,,0,0,0,,càng lúc càng vặn vẹo, ác độc.
Dialogue: 0,0:45:08.55,0:45:10.68,Default,,0,0,0,,[Diệp Tịch Vụ ơi là Diệp Tịch Vụ,]
Dialogue: 0,0:45:10.99,0:45:12.28,Default,,0,0,0,,[cô đã làm gì vậy?]
Dialogue: 0,0:45:18.11,0:45:19.16,Default,,0,0,0,,Vậy nên lần này,
Dialogue: 0,0:45:19.84,0:45:21.59,Default,,0,0,0,,nhị tiểu thư lại bỏ thứ gì
Dialogue: 0,0:45:22.39,0:45:23.36,Default,,0,0,0,,trong cơm canh thế?
Dialogue: 0,0:45:26.99,0:45:28.20,Default,,0,0,0,,Ta chẳng bỏ gì vào cả.
Dialogue: 0,0:45:28.59,0:45:29.28,Default,,0,0,0,,Vậy à?
Dialogue: 0,0:45:30.88,0:45:32.36,Default,,0,0,0,,Nhị tiểu thư tốn bao công sức,
Dialogue: 0,0:45:32.84,0:45:34.95,Default,,0,0,0,,chỉ để ta được ăn một bữa cơm no ư?
Dialogue: 0,0:45:35.43,0:45:36.39,Default,,0,0,0,,Không được à?
Dialogue: 0,0:45:37.07,0:45:38.32,Default,,0,0,0,,Đàm Đài Tẫn, ta cho ngươi biết,
Dialogue: 0,0:45:38.51,0:45:40.07,Default,,0,0,0,,ngươi đừng hòng
Dialogue: 0,0:45:40.43,0:45:41.51,Default,,0,0,0,,để bản thân chết đói.
Dialogue: 0,0:45:42.11,0:45:43.16,Default,,0,0,0,,Nhìn kỹ đây cho ta.
Dialogue: 0,0:45:59.16,0:46:00.28,Default,,0,0,0,,Lần này ngươi hài lòng rồi chứ?
Dialogue: 0,0:46:02.88,0:46:05.32,Default,,0,0,0,,Sau này ngày ba bữa, ngươi đều tới đây ăn.
Dialogue: 0,0:46:05.36,0:46:06.59,Default,,0,0,0,,Xuân Đào sẽ mang cơm cho ngươi,
Dialogue: 0,0:46:06.59,0:46:08.32,Default,,0,0,0,,đưa gì thì ngươi ăn nấy,
Dialogue: 0,0:46:08.68,0:46:09.88,Default,,0,0,0,,không được ăn
Dialogue: 0,0:46:09.88,0:46:11.32,Default,,0,0,0,,mấy thứ bẩn thỉu lung tung kia nữa.
Dialogue: 0,0:46:49.64,0:46:53.28,Default,,0,0,0,,[Hình như thật sự chỉ là\Nmột bát cơm bình thường.]
Dialogue: 0,0:46:55.59,0:46:58.59,Default,,0,0,0,,[Rốt cuộc nữ nhân này làm sao vậy?]
Dialogue: 0,0:47:04.64,0:47:08.16,Default,,0,0,0,,Đây hẳn là bữa cơm no đầu tiên\Nngươi được ăn
Dialogue: 0,0:47:08.28,0:47:09.95,Default,,0,0,0,,từ khi vào Diệp Phủ nhỉ?
Dialogue: 0,0:47:11.03,0:47:11.91,Default,,0,0,0,,Ngươi có phát hiện không?
Dialogue: 0,0:47:12.32,0:47:15.20,Default,,0,0,0,,Mấy ngày nay, nữ nhân đó quá bình thường,
Dialogue: 0,0:47:15.36,0:47:16.88,Default,,0,0,0,,có phải đầu óc có vấn đề rồi không?
Dialogue: 0,0:47:17.66,0:47:18.67,Default,,0,0,0,,Có lẽ,
Dialogue: 0,0:47:19.46,0:47:20.96,Default,,0,0,0,,cô ta muốn hành hạ ta
Dialogue: 0,0:47:21.66,0:47:22.59,Default,,0,0,0,,bằng cách khác.
Dialogue: 0,0:47:23.02,0:47:24.44,Default,,0,0,0,,Dù sao thân xác ta cũng ở đây,
Dialogue: 0,0:47:25.90,0:47:27.36,Default,,0,0,0,,nếu con tin chết,
Dialogue: 0,0:47:27.94,0:47:28.84,Default,,0,0,0,,thì Diệp gia
Dialogue: 0,0:47:29.71,0:47:31.03,Default,,0,0,0,,cũng không thoát khỏi trách nhiệm.
Dialogue: 0,0:47:31.44,0:47:34.23,Default,,0,0,0,,Cũng phải, nữ nhân này\Nthay đổi thất thường,
Dialogue: 0,0:47:34.51,0:47:35.76,Default,,0,0,0,,đúng là không thể ở lại đây lâu được.
Dialogue: 0,0:47:36.88,0:47:39.59,Default,,0,0,0,,Cơ mà rời khỏi đây
Dialogue: 0,0:47:40.23,0:47:41.48,Default,,0,0,0,,thì ngươi có thể đi đâu?
Dialogue: 0,0:47:42.23,0:47:43.09,Default,,0,0,0,,Đúng rồi,
Dialogue: 0,0:47:43.61,0:47:46.09,Default,,0,0,0,,ta gặp mấy con quạ đến từ nước Cảnh.
Dialogue: 0,0:47:47.05,0:47:48.17,Default,,0,0,0,,Nước Cảnh sao?
Dialogue: 0,0:47:50.82,0:47:51.53,Default,,0,0,0,,Trùng hợp thật,
Dialogue: 0,0:47:52.82,0:47:54.53,Default,,0,0,0,,đó cũng là nơi ta ra đời.
Dialogue: 0,0:47:55.74,0:47:57.21,Default,,0,0,0,,Ngươi đã đến vương cung nước Cảnh chưa?
Dialogue: 0,0:47:58.30,0:48:01.74,Default,,0,0,0,,Đó là nơi kinh tởm nhất thế gian này.
Dialogue: 0,0:48:01.74,0:48:02.69,Default,,0,0,0,,Chúng nói
Dialogue: 0,0:48:02.82,0:48:05.00,Default,,0,0,0,,nhìn thấy thầy mo đốt khói làm phép,
Dialogue: 0,0:48:05.17,0:48:07.04,Default,,0,0,0,,ngửi thấy mùi thối rữa của người bệnh,
Dialogue: 0,0:48:07.30,0:48:09.57,Default,,0,0,0,,còn có các đại thần\Nnôn nóng đi lại trên triều đình nữa.
Dialogue: 0,0:48:10.34,0:48:11.61,Default,,0,0,0,,Chắc là Cảnh vương đấy.
Dialogue: 0,0:48:14.21,0:48:17.05,Default,,0,0,0,,Người mà lẽ ra ta phải gọi là phụ thân,
Dialogue: 0,0:48:18.86,0:48:20.30,Default,,0,0,0,,không còn sống được lâu nữa.
Dialogue: 0,0:48:30.21,0:48:32.13,Default,,0,0,0,,[Nhưng ta còn chẳng thể ra khỏi Diệp Phủ,]
Dialogue: 0,0:48:32.86,0:48:34.82,Default,,0,0,0,,[mấy chuyện đó không liên quan đến ta.]
Dialogue: 0,0:48:52.30,0:48:52.82,Default,,0,0,0,,Phụ vương,
Dialogue: 0,0:48:53.21,0:48:54.42,Default,,0,0,0,,nhi thần có chuyện quan trọng cần bẩm.
Dialogue: 0,0:48:54.42,0:48:55.21,Default,,0,0,0,,Lẫm Nhi,
Dialogue: 0,0:48:55.49,0:48:56.65,Default,,0,0,0,,con đến đúng lúc lắm.
Dialogue: 0,0:48:57.38,0:48:58.65,Default,,0,0,0,,Ta vừa nhận được cấp báo,
Dialogue: 0,0:48:58.65,0:49:00.49,Default,,0,0,0,,Đàm Đài Vô Cực sắp chết rồi,
Dialogue: 0,0:49:01.38,0:49:03.49,Default,,0,0,0,,Ca ca hắn sắp lên kế vị.
Dialogue: 0,0:49:04.17,0:49:05.94,Default,,0,0,0,,Nay giữ lại con tin kia
Dialogue: 0,0:49:06.02,0:49:08.39,Default,,0,0,0,,e cũng không còn tác dụng gì nữa.
Dialogue: 0,0:49:08.46,0:49:09.18,Default,,0,0,0,,Nhi thần nghe nói,
Dialogue: 0,0:49:09.98,0:49:12.01,Default,,0,0,0,,Đàm Đài Minh Lãng\Ntrời sinh tính tình tàn nhẫn.
Dialogue: 0,0:49:12.01,0:49:14.49,Default,,0,0,0,,Người này chưa chắc sẽ niệm tình huynh đệ.
Dialogue: 0,0:49:14.86,0:49:18.69,Default,,0,0,0,,Giết con tin thì e lại đúng ý hắn muốn.
Dialogue: 0,0:49:18.82,0:49:21.42,Default,,0,0,0,,Lẫm Nhi của ta quả nhiên thông tuệ.
Dialogue: 0,0:49:21.98,0:49:24.26,Default,,0,0,0,,Nói vậy, nếu trẫm để hắn được sống
Dialogue: 0,0:49:24.94,0:49:26.54,Default,,0,0,0,,thì sẽ thành cái gai trong tim
Dialogue: 0,0:49:26.54,0:49:27.86,Default,,0,0,0,,của Đàm Đài Minh Lãng.
Dialogue: 0,0:49:28.34,0:49:30.34,Default,,0,0,0,,Lát nữa ta sẽ truyền Đàm Đài Tẫn vào cung,
Dialogue: 0,0:49:30.34,0:49:32.34,Default,,0,0,0,,ta phải xem hắn có thái độ thế nào.
Dialogue: 0,0:49:32.78,0:49:33.86,Default,,0,0,0,,Nếu hắn có lòng
Dialogue: 0,0:49:34.05,0:49:35.86,Default,,0,0,0,,thì ta không ngại giúp hắn trở về,
Dialogue: 0,0:49:35.86,0:49:37.13,Default,,0,0,0,,khuấy đảo nước Cảnh
Dialogue: 0,0:49:37.13,0:49:39.42,Default,,0,0,0,,rồi nhân lúc hỗn loạn để giết hắn.
Dialogue: 0,0:49:39.65,0:49:42.38,Default,,0,0,0,,Còn nếu hắn tài hèn trí mọn,
Dialogue: 0,0:49:42.69,0:49:45.90,Default,,0,0,0,,ta cũng không cần tiếp tục\Ngiữ hắn lại nữa.
Dialogue: 0,0:49:46.09,0:49:48.53,Default,,0,0,0,,Tới lúc đó, ta sẽ tìm người tầm tuổi đó\Nđưa sang nước Cảnh,
Dialogue: 0,0:49:48.53,0:49:50.13,Default,,0,0,0,,chỉ cần Đàm Đài Minh Lãng
Dialogue: 0,0:49:50.36,0:49:51.26,Default,,0,0,0,,tin là thật,
Dialogue: 0,0:49:51.30,0:49:52.02,Default,,0,0,0,,vậy thì,
Dialogue: 0,0:49:52.60,0:49:53.92,Default,,0,0,0,,thật giả có quan trọng vậy không?
Dialogue: 0,0:49:55.09,0:49:55.65,Default,,0,0,0,,Phụ vương.
Dialogue: 0,0:49:58.50,0:50:03.44,Default,,0,0,0,,[Trường Nguyệt Tẫn Minh]
Dialogue: 0,0:50:18.46,0:50:26.22,Default,,0,0,0,,♪Nỗi lòng phàm tục\Nlà ngước mắt lên trăng bỗng khuyết♪
Dialogue: 0,0:50:26.22,0:50:34.02,Default,,0,0,0,,♪Hồng trần là đôi mắt thấy\Nmuôn hoa rụng giữa cơn mưa tuyết♪
Dialogue: 0,0:50:34.02,0:50:41.14,Default,,0,0,0,,♪Trắc ẩn là\Nmột cánh bướm trong lòng khi tan biến♪
Dialogue: 0,0:50:41.74,0:50:45.62,Default,,0,0,0,,♪Tỉnh ngộ là\Ngột rửa hồi ức trong nước đục♪
Dialogue: 0,0:50:45.62,0:50:49.82,Default,,0,0,0,,♪Từ ấy chẳng gặp nhau♪
Dialogue: 0,0:50:51.38,0:50:54.98,Default,,0,0,0,,♪Ta từng thấy lời dịu dàng, từng nở hoa♪
Dialogue: 0,0:50:54.98,0:50:58.22,Default,,0,0,0,,♪Cay mắt đến nỗi nói mớ♪
Dialogue: 0,0:50:58.78,0:51:02.90,Default,,0,0,0,,♪Tơ tình vấn vương, mái ngói dễ vỡ♪
Dialogue: 0,0:51:02.90,0:51:06.42,Default,,0,0,0,,♪Một vòng tay có sự sợ hãi vô tận♪
Dialogue: 0,0:51:07.02,0:51:10.46,Default,,0,0,0,,♪Ta kính trọng người biết bao,\Nthời gian thấm thoát thoi đưa♪
Dialogue: 0,0:51:10.46,0:51:14.14,Default,,0,0,0,,♪Từng vững tin được yêu trong phút chốc♪
Dialogue: 0,0:51:14.22,0:51:18.34,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:51:18.34,0:51:26.10,Default,,0,0,0,,♪Sự thành kính tựa ánh trăng không tì vết♪
Dialogue: 0,0:51:28.10,0:51:31.50,Default,,0,0,0,,♪Hãy lắng nghe hơi thở của đóa hoa♪
Dialogue: 0,0:51:31.62,0:51:35.02,Default,,0,0,0,,♪Như sự phồn hoa của chúng sinh muôn loài♪
Dialogue: 0,0:51:35.58,0:51:39.78,Default,,0,0,0,,♪Dẫu đi bao lâu, sao trời hay bão cát♪
Dialogue: 0,0:51:39.78,0:51:43.98,Default,,0,0,0,,♪Ánh trăng là bộ giáp của ta♪
Dialogue: 0,0:51:43.98,0:51:47.30,Default,,0,0,0,,♪Ta mong sau này người mang theo vết sẹo♪
Dialogue: 0,0:51:47.30,0:51:51.26,Default,,0,0,0,,♪Cũng thử sống dịu dàng một phen♪
Dialogue: 0,0:51:51.42,0:51:54.94,Default,,0,0,0,,♪Xé bỏ nỗi cô độc trên mình♪
Dialogue: 0,0:51:54.94,0:52:02.58,Default,,0,0,0,,♪Yêu lại người từng căm hận♪
Dialogue: 0,0:52:02.58,0:52:09.98,Default,,0,0,0,,♪Kiếp phù du nhỏ, giấc mộng lớn♪
Dialogue: 0,0:52:09.98,0:52:18.62,Default,,0,0,0,,♪Xin đừng phụ lòng nhau♪
