Dialogue: 0,0:12:03.36,0:12:07.33,Default,,0000,0000,0000,,{\an8\c&HC36517&\3c&HE2EAA9&}ĐỒ TỌC MẠCH
Dialogue: 0,0:13:04.75,0:13:06.04,Default,,0000,0000,0000,,Arisu?
Dialogue: 0,0:13:06.80,0:13:10.10,Default,,0000,0000,0000,,Arisu? Cậu đang ở đâu?
Dialogue: 0,0:13:10.21,0:13:11.42,Default,,0000,0000,0000,,Arisu?
Dialogue: 0,0:13:12.18,0:13:13.37,Default,,0000,0000,0000,,Arisu!
Dialogue: 0,0:13:13.45,0:13:14.77,Default,,0000,0000,0000,,Arisu! Cậu đang ở đâu?
Dialogue: 0,0:13:14.97,0:13:16.41,Default,,0000,0000,0000,,Arisu!
Dialogue: 0,0:13:19.48,0:13:22.63,Default,,0000,0000,0000,,Arisu, cậu đang ở đâu? Arisu!
Dialogue: 0,0:13:24.78,0:13:27.07,Default,,0000,0000,0000,,Mình đã làm gì chứ?
Dialogue: 0,0:13:27.07,0:13:29.83,Default,,0000,0000,0000,,Mình đã làm gì trong Wired chứ?
Dialogue: 0,0:13:30.45,0:13:34.12,Default,,0000,0000,0000,,Mình kia đang làm gì vậy chứ?
Dialogue: 0,0:13:44.26,0:13:48.26,Default,,0000,0000,0010,,{\an8\c&HD9FF3B&\3c&H6D803B&}Đừng lo lắng về những tin đồn! Đừng lo lắng gì hết!
Dialogue: 0,0:14:39.23,0:14:42.68,Default,,0000,0000,0000,,Có ổn với em không khi làm chuyện này với một giáo viên?
Dialogue: 0,0:14:43.32,0:14:44.68,Default,,0000,0000,0000,,K-Không đâu, không sao cả...
Dialogue: 0,0:14:45.50,0:14:48.70,Default,,0000,0000,0000,,Vậy sao em lại làm?
Dialogue: 0,0:14:48.91,0:14:50.99,Default,,0000,0000,0000,,Vì... em muốn.
Dialogue: 0,0:15:16.14,0:15:21.58,Default,,0000,0000,0000,,"Nè, cậu có biết Mizuki Arisu thích ai không?"
Dialogue: 0,0:15:25.57,0:15:29.86,Default,,0000,0000,0000,,"Cậu có biết cậu ấy nghĩ đến ai khi thủ dâm không?"
Dialogue: 0,0:15:33.47,0:15:37.55,Default,,0000,0000,0000,,Quả nhiên là cậu đã nói với mọi người! Tin đồn là thật sao?!
Dialogue: 0,0:15:39.70,0:15:41.08,Default,,0000,0000,0000,,Lain!
Dialogue: 0,0:15:42.29,0:15:45.21,Default,,0000,0000,0000,,Cậu đã luôn ngồi đó im lặng theo dõi tớ phải không?!
Dialogue: 0,0:15:45.21,0:15:50.26,Default,,0000,0000,0000,,Cậu đã thấy những gì tớ không muốn cho người khác biết! Khi tớ không muốn cho bất cứ ai thấy!
Dialogue: 0,0:15:50.26,0:15:51.80,Default,,0000,0000,0000,,Khi tớ...
Dialogue: 0,0:15:53.30,0:15:55.35,Default,,0000,0000,0000,,Hãy nói là không phải vậy đi, Lain!
Dialogue: 0,0:15:56.82,0:15:58.10,Default,,0000,0000,0000,,Lain!
Dialogue: 0,0:15:59.47,0:16:00.77,Default,,0000,0000,0000,,Cậu...
Dialogue: 0,0:16:48.78,0:16:50.44,Default,,0000,0000,0000,,Cô là ai?
Dialogue: 0,0:16:52.03,0:16:54.03,Default,,0000,0000,0000,,Cô không phải tôi.
Dialogue: 0,0:16:54.82,0:16:57.32,Default,,0000,0000,0000,,Tôi không bao giờ làm những việc như thế.
Dialogue: 0,0:16:57.60,0:16:59.07,Default,,0000,0000,0000,,Tôi...
Dialogue: 0,0:16:59.07,0:17:04.14,Default,,0000,0000,0000,,Dừng lại đi! Tại sao cô lại giả mạo tôi rồi đi làm những chuyện đó thế hả?
Dialogue: 0,0:17:13.32,0:17:13.91,Default,,0000,0000,0000,,Cô...
Dialogue: 0,0:17:17.05,0:17:20.14,Default,,0000,0000,0000,,Tôi đang tự sát đấy!
Dialogue: 0,0:17:24.02,0:17:26.90,Default,,0000,0000,0000,,Tại sao? Tại sao cô lại ấm như thế?
Dialogue: 0,0:17:27.15,0:17:31.40,Default,,0000,0000,0000,,Tại sao tôi lại cảm nhận được thân nhiệt của cô?
Dialogue: 0,0:17:31.90,0:17:35.40,Default,,0000,0000,0000,,Bởi vì, tôi là Lain, phải không?
Dialogue: 0,0:17:35.78,0:17:36.66,Default,,0000,0000,0000,,Không phải!
Dialogue: 0,0:17:36.66,0:17:38.16,Default,,0000,0000,0000,,Không phải!
Dialogue: 0,0:17:58.36,0:18:00.60,Default,,0000,0000,0000,,Những thứ này là gì vậy?
Dialogue: 0,0:18:01.68,0:18:03.31,Default,,0000,0000,0000,,Tất cả đều là cô.
Dialogue: 0,0:18:03.45,0:18:06.89,Default,,0000,0000,0000,,Tôi đã nói rằng cô luôn tồn tại trong Wired, phải không?
Dialogue: 0,0:18:07.85,0:18:09.65,Default,,0000,0000,0000,,Cô cũng như tôi thôi.
Dialogue: 0,0:18:09.65,0:18:11.82,Default,,0000,0000,0000,,Cô có mặt khắp nơi trong Wired.
Dialogue: 0,0:18:11.82,0:18:17.74,Default,,0000,0000,0000,,Cho nên, dù đó có là ai, dù họ ở đâu, cô vẫn luôn có mặt ở đó.
Dialogue: 0,0:18:18.86,0:18:22.24,Default,,0000,0000,0000,,Cô đã theo dõi những gì mà họ không muốn người khác nhìn thấy.
Dialogue: 0,0:18:22.30,0:18:24.83,Default,,0000,0000,0000,,Và cô đã nói cho tất cả mọi người biết.
Dialogue: 0,0:18:25.83,0:18:27.65,Default,,0000,0000,0000,,Đó là điều đúng đắn nên làm.
Dialogue: 0,0:18:27.71,0:18:32.38,Default,,0000,0000,0000,,Thông tin trong Wired cũng nên được chia sẻ, phải không?
Dialogue: 0,0:18:40.55,0:18:45.02,Default,,0000,0000,0000,,Mọi thứ ông nói đều là dối trá.
Dialogue: 0,0:18:45.02,0:18:45.90,Default,,0000,0000,0000,,Tại sao?
Dialogue: 0,0:18:46.01,0:18:51.15,Default,,0000,0000,0000,,Arisu và những người khác bảo rằng họ đã nhìn thấy tôi trong Wired khi tôi không có mặt ở đó.
Dialogue: 0,0:18:51.45,0:18:57.24,Default,,0000,0000,0000,,Miễn là tôi còn nhận thức được bản thân,\Nthì con người thật vẫn còn ở trong tôi!
Dialogue: 0,0:18:59.31,0:19:02.57,Default,,0000,0000,0000,,Ông bảo những thứ bịp bợm này là tôi sao?
Dialogue: 0,0:19:03.24,0:19:05.20,Default,,0000,0000,0000,,Chỉ là một đống rác không hơn không kém!
Dialogue: 0,0:19:08.29,0:19:09.67,Default,,0000,0000,0000,,Tôi...
Dialogue: 0,0:19:10.07,0:19:13.00,Default,,0000,0000,0000,,Nếu tôi thật sự là những gì mà ông nói, thì...
Dialogue: 0,0:19:13.92,0:19:16.41,Default,,0000,0000,0000,,Thì sao, Lain?
Dialogue: 0,0:19:17.55,0:19:22.64,Default,,0000,0000,0000,,Những ký ức của họ đã bị Lain nhìn thấy... Tôi có thể xóa thông tin đó!
Dialogue: 0,0:19:25.45,0:19:28.06,Default,,0000,0000,0000,,Đúng thế. Cứ thử đi.
Dialogue: 0,0:19:28.56,0:19:32.21,Default,,0000,0000,0000,,Cô vốn được sinh ra với sức mạnh đó mà.
Dialogue: 0,0:19:51.67,0:19:53.92,Default,,0000,0000,0000,,Chào buổi sáng!
Dialogue: 0,0:20:02.66,0:20:03.87,Default,,0000,0000,0000,,Lain!
Dialogue: 0,0:20:06.89,0:20:08.56,Default,,0000,0000,0000,,Này, Lain!
Dialogue: 0,0:20:11.52,0:20:13.06,Default,,0000,0000,0000,,Họ đã quên rồi sao?
Dialogue: 0,0:20:16.32,0:20:17.56,Default,,0000,0000,0000,,Là thật sao?
Dialogue: 0,0:20:18.32,0:20:20.28,Default,,0000,0000,0000,,Lain!
Dialogue: 0,0:20:22.99,0:20:23.98,Default,,0000,0000,0000,,Họ đã quên rồi!
Dialogue: 0,0:20:25.16,0:20:26.49,Default,,0000,0000,0000,,Arisu!
Dialogue: 0,0:20:29.78,0:20:33.19,Default,,0000,0000,0000,,C... C... Cái gì?
Dialogue: 0,0:20:33.86,0:20:35.17,Default,,0000,0000,0000,,Arisu!
Dialogue: 0,0:20:36.58,0:20:39.21,Default,,0000,0000,0000,,Nè, nè, hôm nay tớ muốn đến Cyberia!
Dialogue: 0,0:20:39.71,0:20:40.92,Default,,0000,0000,0000,,Đi nhé!
Dialogue: 0,0:20:41.51,0:20:42.51,Default,,0000,0000,0000,,Nhất trí!
Dialogue: 0,0:20:42.51,0:20:44.65,Default,,0000,0000,0000,,Hể? Chuyện hiếm thấy đấy...
Dialogue: 0,0:20:44.68,0:20:47.61,Default,,0000,0000,0000,,Được thôi. Tụi mình có thể thay đồ ở nhà tớ rồi đi luôn.
Dialogue: 0,0:20:47.61,0:20:48.48,Default,,0000,0000,0000,,Tuyệt vời!
Dialogue: 0,0:20:53.89,0:20:55.77,Default,,0000,0000,0000,,Nè, tớ nên mặc gì đây?
Dialogue: 0,0:20:56.15,0:20:59.27,Default,,0000,0000,0000,,Dừng lại đi! Đây mới là tớ mà!
Dialogue: 0,0:21:06.20,0:21:08.12,Default,,0000,0000,0000,,Tớ ở đây cơ mà!
Dialogue: 0,0:21:09.16,0:21:10.03,Default,,0000,0000,0000,,Nhanh nào!
Dialogue: 0,0:21:10.03,0:21:11.83,Default,,0000,0000,0000,,Đợi tớ với!
Dialogue: 0,0:21:15.75,0:21:20.65,Default,,0000,0000,0000,,Đúng vậy! Lain là Lain, và tôi là tôi.
Dialogue: 0,0:21:42.48,0:21:44.07,Default,,0000,0000,0000,,Hello, Navi.
Dialogue: 0,0:21:45.82,0:21:48.16,Default,,0000,0000,0000,,Hello, Lain.
Dialogue: 0,0:21:55.25,0:21:58.37,Default,,0000,0000,0000,,Tôi... là tôi phải không?
Dialogue: 0,0:21:59.46,0:22:03.41,Default,,0000,0000,0000,,Không có tôi nào khác ngoài tôi, phải không?
