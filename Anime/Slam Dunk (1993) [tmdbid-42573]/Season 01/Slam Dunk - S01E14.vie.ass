Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:04.35,0:00:10.77,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:28.94,0:00:35.45,Default,,0,0,0,,♫ Ánh mặt trời chói rọi phía sau lưng,\Ntôi bước trên con đường này ♫
Dialogue: 0,0:00:35.75,0:00:41.89,Default,,0,0,0,,♫ Cũng như thường lệ, lại bị vỗ vai ♫
Dialogue: 0,0:00:42.49,0:00:48.99,Default,,0,0,0,,♫ Cậu là nữ thần của tôi, không có lý do gì cả ♫
Dialogue: 0,0:00:49.05,0:00:54.49,Default,,0,0,0,,♫ Nhưng lại chưa từng khoác lấy tay tôi ♫
Dialogue: 0,0:00:54.57,0:01:01.13,Default,,0,0,0,,♫ Không biết từ lúc nào,\Nánh mắt đã không thể rời đi ♫
Dialogue: 0,0:01:01.27,0:01:07.85,Default,,0,0,0,,♫ Không buông ra, không do dự,\Nđiên cuồng vì cậu ♫
Dialogue: 0,0:01:07.87,0:01:14.79,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:01:14.89,0:01:21.35,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:01:21.37,0:01:28.59,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm tiến lên một bước ♫
Dialogue: 0,0:01:28.75,0:01:35.97,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:01:45.91,0:01:49.70,Default,,0,0,0,,[Đội bóng rổ Shohoku dương dương tự đắc\Nbước vào trường cấp ba Ryonan.]
Dialogue: 0,0:01:49.82,0:01:53.67,Default,,0,0,0,,[Ngay trong buổi sáng đã triển khai buổi đấu tập\Nvới đội bóng Ryonan, đội bóng đứng top bốn của tỉnh.]
Dialogue: 0,0:01:54.73,0:01:57.54,Default,,0,0,0,,[Sau khi biết mình\Nkhông có tên trong đội hình thi đấu,]
Dialogue: 0,0:01:57.67,0:01:59.59,Default,,0,0,0,,[Sakuragi Hanamichi cũng đã nổi cơn giận.]
Dialogue: 0,0:02:02.48,0:02:07.11,Default,,0,0,0,,[May nhờ có câu nói "vũ khí bí mật" của\Nhuấn luyện viên Anzai, cậu đã nguôi giận hơn.]
Dialogue: 0,0:02:07.27,0:02:11.17,Default,,0,0,0,,[Sakuragi còn chạy đến trước mặt tuyển thủ\Ngiỏi nhất của Ryonan - Sendoh để chứng tỏ đấu chí của mình.]
Dialogue: 0,0:02:18.94,0:02:20.74,Default,,0,0,0,,[Sau đó khi trận đấu bắt đầu chưa được bao lâu,]
Dialogue: 0,0:02:20.98,0:02:25.00,Default,,0,0,0,,[tuyển thủ đứng đầu Ryonan - Uozumi,\Nngười định sẵn sẽ là đối thủ cả đời với Sakuragi,]
Dialogue: 0,0:02:25.16,0:02:28.13,Default,,0,0,0,,[đã dẫn trước Shohoku ba quả.]
Dialogue: 0,0:02:33.61,0:02:36.16,Default,,0,0,0,,Thế nào, đã nhìn thấy chưa, Akagi?
Dialogue: 0,0:02:37.25,0:02:39.83,Default,,0,0,0,,Trận đấu lần này chúng ta sẽ lấy 100 điểm.
Dialogue: 0,0:02:39.95,0:02:40.50,Default,,0,0,0,,Vâng.
Dialogue: 0,0:02:41.28,0:02:49.69,Default,,0,0,0,,[Vượt đẳng cấp cấp ba!\NThế công mãnh liệt của Ryonan!]
Dialogue: 0,0:02:43.54,0:02:47.79,Default,,0,0,0,,[Vượt đẳng cấp cấp ba,\Nthế công mãnh liệt của Ryonan.]
Dialogue: 0,0:02:50.54,0:02:53.51,Default,,0,0,0,,Không hay, không hay rồi!\NBố Già! Tên Thủ Lĩnh Người Vượn đó...
Dialogue: 0,0:02:53.51,0:02:57.07,Default,,0,0,0,,Không phải Bố Già,\Ngọi là huấn luyện viên Anzai cho đàng hoàng!
Dialogue: 0,0:02:57.19,0:02:59.62,Default,,0,0,0,,Không hay rồi, Ayako, nguy hiểm rồi!
Dialogue: 0,0:02:59.70,0:03:02.81,Default,,0,0,0,,Tại sao lịch sự với tôi như vậy,\Nmà với huấn luyện viên thì không?
Dialogue: 0,0:03:03.72,0:03:07.63,Default,,0,0,0,,Phòng thủ!
Dialogue: 0,0:03:07.63,0:03:09.77,Default,,0,0,0,,Tốt, lấy một bóng nào!
Dialogue: 0,0:03:10.56,0:03:12.06,Default,,0,0,0,,Tên Thủ Lĩnh Người Vượn đó
Dialogue: 0,0:03:12.43,0:03:16.67,Default,,0,0,0,,chẳng qua là đã chặn quả bóng của anh Bốn Mắt\Nvới Rukawa và Tinh Tinh Bự thôi mà đã đắc ý như vậy.
Dialogue: 0,0:03:16.97,0:03:18.24,Default,,0,0,0,,Bầu không khí không ổn lắm.
Dialogue: 0,0:03:18.30,0:03:20.78,Default,,0,0,0,,Khí thế của Uozumi tăng cao,\Nnhững người khác cũng hung tợn theo.
Dialogue: 0,0:03:20.90,0:03:22.55,Default,,0,0,0,,Đúng vậy, đúng vậy.
Dialogue: 0,0:03:22.64,0:03:26.70,Default,,0,0,0,,Bố Già, bây giờ là lúc nguy cấp đấy,\Nchỉ có thể tung vũ khí bí mật ra mới được.
Dialogue: 0,0:03:27.45,0:03:30.26,Default,,0,0,0,,Cuối cùng cũng đến vũ khí bí mật\Ntôi đây lên sân, Sakuragi ra trận!
Dialogue: 0,0:03:30.49,0:03:32.26,Default,,0,0,0,,Rukawa, mày vào trong đi.
Dialogue: 0,0:03:33.16,0:03:34.77,Default,,0,0,0,,Gì vậy chứ?
Dialogue: 0,0:03:35.29,0:03:38.26,Default,,0,0,0,,Trận đấu vừa bắt đầu chưa được hai phút nữa!
Dialogue: 0,0:03:38.34,0:03:39.22,Default,,0,0,0,,Cậu ngồi xuống cho tôi!
Dialogue: 0,0:03:39.35,0:03:41.52,Default,,0,0,0,,- Không được, Sakuragi!\N- Bỏ tôi ra, tôi phải ra sân!
Dialogue: 0,0:03:41.72,0:03:45.21,Default,,0,0,0,,Chết tiệt! Đừng để bị thua\Ndưới tay tên Thủ Lĩnh Người Vượn đó!
Dialogue: 0,0:03:45.56,0:03:46.96,Default,,0,0,0,,Cứ xông lên! Xông lên!
Dialogue: 0,0:03:48.39,0:03:50.41,Default,,0,0,0,,Hanamichi lại nổi điên nữa rồi.
Dialogue: 0,0:03:50.55,0:03:53.57,Default,,0,0,0,,Ai mà không biết cho dù Hanamichi có ra sân\Nthì cũng vô dụng thôi.
Dialogue: 0,0:03:53.89,0:03:57.05,Default,,0,0,0,,Số 4 của Ryonan đúng là lợi hại,\Ny như một con quái vật vậy!
Dialogue: 0,0:03:57.32,0:04:00.00,Default,,0,0,0,,Thằng Hanamichi ghét nhất là chịu thua.
Dialogue: 0,0:04:00.21,0:04:02.87,Default,,0,0,0,,Nhìn thấy đội của mình sắp thua\Nđương nhiên chịu không nổi rồi.
Dialogue: 0,0:04:03.05,0:04:06.71,Default,,0,0,0,,- Tao thấy nó xem trận đấu này thành trận đánh nhau rồi.\N- Chắc chắn là thế.
Dialogue: 0,0:04:11.06,0:04:11.96,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:04:12.79,0:04:16.44,Default,,0,0,0,,- Ryonan, cố lên!\N- Sendoh!
Dialogue: 0,0:04:16.66,0:04:21.43,Default,,0,0,0,,Phòng thủ!
Dialogue: 0,0:04:24.71,0:04:27.51,Default,,0,0,0,,[Bóng của Akagi và Rukawa đều bị chặn,]
Dialogue: 0,0:04:27.62,0:04:30.46,Default,,0,0,0,,[hơn nữa tốc độ của mỗi người cũng khác nhau.]
Dialogue: 0,0:04:30.85,0:04:31.87,Default,,0,0,0,,[Đây chính là Ryonan.]
Dialogue: 0,0:04:32.03,0:04:35.48,Default,,0,0,0,,- Yasuda, mau chuyền bóng qua.\N- Tấn công, tấn công!
Dialogue: 0,0:04:35.67,0:04:39.13,Default,,0,0,0,,[Toi rồi, khí thế của mọi người bị\Nkỹ thuật ngăn chặn của Uozumi chèn ép.]
Dialogue: 0,0:04:39.24,0:04:41.70,Default,,0,0,0,,[Thua cả về mặt tâm lý, vậy sẽ toi mất!]
Dialogue: 0,0:04:41.87,0:04:45.78,Default,,0,0,0,,Bố Già, bây giờ nên dùng vũ khí bí mật rồi!
Dialogue: 0,0:04:45.78,0:04:47.00,Default,,0,0,0,,Cậu ngồi xuống đi!
Dialogue: 0,0:04:47.16,0:04:51.89,Default,,0,0,0,,Chẳng phải Shohoku chúng ta\Ncó một chàng trai luôn rất bình tĩnh à?
Dialogue: 0,0:04:52.13,0:04:53.12,Default,,0,0,0,,Mặc dù có chút đần độn.
Dialogue: 0,0:04:54.50,0:04:55.10,Default,,0,0,0,,Chuyền cho tôi!
Dialogue: 0,0:04:56.46,0:04:58.00,Default,,0,0,0,,Rukawa, cậu ta
Dialogue: 0,0:04:58.44,0:05:00.40,Default,,0,0,0,,muốn khiêu chiến với anh Uozumi.
Dialogue: 0,0:05:00.55,0:05:01.87,Default,,0,0,0,,Thằng nhóc lớp 10!
Dialogue: 0,0:05:12.60,0:05:14.69,Default,,0,0,0,,- Được rồi, tới đây.\N- Sendoh!
Dialogue: 0,0:05:15.67,0:05:16.57,Default,,0,0,0,,Đáng ghét!
Dialogue: 0,0:05:22.38,0:05:23.71,Default,,0,0,0,,Chặn cậu ta lại, Rukawa!
Dialogue: 0,0:05:25.41,0:05:27.40,Default,,0,0,0,,Tốc độ trở về của Rukawa nhanh quá!
Dialogue: 0,0:05:27.68,0:05:30.41,Default,,0,0,0,,Nhanh... nhanh quá, cả hai đều rất nhanh!
Dialogue: 0,0:05:31.39,0:05:32.15,Default,,0,0,0,,Sắp ném bóng rồi!
Dialogue: 0,0:05:32.95,0:05:33.39,Default,,0,0,0,,Đừng hòng!
Dialogue: 0,0:05:46.67,0:05:48.79,Default,,0,0,0,,Một động tác giả tốt lắm, Sendoh!
Dialogue: 0,0:05:48.79,0:05:50.55,Default,,0,0,0,,Ném tốt lắm!
Dialogue: 0,0:05:51.98,0:05:52.67,Default,,0,0,0,,Tại sao thế?
Dialogue: 0,0:05:52.91,0:05:54.68,Default,,0,0,0,,Tại sao... tại sao có thể\Nchuyền một quả bóng đẹp như vậy!
Dialogue: 0,0:05:54.79,0:05:58.68,Default,,0,0,0,,Đáng ghét, rồi sẽ có ngày mình cũng sẽ\Ntrở thành như thế, nhất định phải làm được!
Dialogue: 0,0:06:03.09,0:06:06.75,Default,,0,0,0,,- Nào, mọi người hãy cùng cố gắng hết sức.\N- Được!
Dialogue: 0,0:06:10.30,0:06:12.65,Default,,0,0,0,,Chết tiệt, khí thế mạnh thế này!
Dialogue: 0,0:06:19.57,0:06:21.06,Default,,0,0,0,,[Tốt lắm tốt lắm!]
Dialogue: 0,0:06:21.74,0:06:25.87,Default,,0,0,0,,[Mặc dù đội trường là Uozumi, nhưng Sendoh\Nmới là trụ cột tinh thần của mọi người.]
Dialogue: 0,0:06:26.07,0:06:29.36,Default,,0,0,0,,[Dưới tình huống cả nhóm xem hai người\Nlà trung tâm,]
Dialogue: 0,0:06:29.74,0:06:31.26,Default,,0,0,0,,[đều thể hiện rất tốt tinh thần đoàn kết.]
Dialogue: 0,0:06:31.63,0:06:33.03,Default,,0,0,0,,Năm nay sẽ tốt lắm đấy!
Dialogue: 0,0:06:33.15,0:06:34.16,Default,,0,0,0,,Hôm nay chỉ mới bắt đầu mà thôi.
Dialogue: 0,0:06:34.28,0:06:35.84,Default,,0,0,0,,Các cậu phải kéo điểm số lên 30 điểm, biết chưa?
Dialogue: 0,0:06:37.20,0:06:38.87,Default,,0,0,0,,[30 điểm?]
Dialogue: 0,0:06:51.27,0:06:54.48,Default,,0,0,0,,Cậu.... cậu định làm gì đấy?
Dialogue: 0,0:06:54.60,0:06:55.90,Default,,0,0,0,,Trọng tài! Trọng tài!
Dialogue: 0,0:06:59.21,0:07:00.77,Default,,0,0,0,,Phạm lỗi kỹ thuật!
Dialogue: 0,0:07:03.95,0:07:06.38,Default,,0,0,0,,Khốn nạn, cậu đang làm trò gì vậy?
Dialogue: 0,0:07:16.94,0:07:17.93,Default,,0,0,0,,[Năm phút của nửa trận đầu,]
Dialogue: 0,0:07:18.55,0:07:23.92,Default,,0,0,0,,[với sự tấn công dồn dập của Ryonan\Nvà phạm lỗi kỹ thuật của Hanamichi,]
Dialogue: 0,0:07:24.07,0:07:26.06,Default,,0,0,0,,[Shohoku bị quả phạt đền, điểm số là 15-0.]
Dialogue: 0,0:07:26.81,0:07:29.75,Default,,0,0,0,,[Taoka mạnh miệng, yêu cầu Uozumi]
Dialogue: 0,0:07:29.85,0:07:31.76,Default,,0,0,0,,[phải kéo khoảng cách thành 30 điểm.]
Dialogue: 0,0:07:32.42,0:07:35.63,Default,,0,0,0,,[Trong lớp 11, lại có con át chủ bài\Ncủa đội Ryonan là Sendoh,]
Dialogue: 0,0:07:35.78,0:07:38.88,Default,,0,0,0,,[bây giờ đang chuẩn bị\Nthể hiện năng lực của cậu ấy.]
Dialogue: 0,0:07:45.04,0:07:45.70,Default,,0,0,0,,Sendoh!
Dialogue: 0,0:08:00.97,0:08:02.95,Default,,0,0,0,,Giỏi lắm!
Dialogue: 0,0:08:04.08,0:08:05.91,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:08:06.32,0:08:16.59,Default,,0,0,0,,Sendoh! Sendoh! Sendoh!
Dialogue: 0,0:08:19.57,0:08:22.93,Default,,0,0,0,,Lợi hại quá, huấn luyện viên!\NNhư một ngôi sao vậy!
Dialogue: 0,0:08:23.09,0:08:23.94,Default,,0,0,0,,Đợi đến mùa hè,
Dialogue: 0,0:08:24.03,0:08:26.51,Default,,0,0,0,,khi đứng trên sân thi đấu các trường cấp ba\Ncũng sẽ nghe được những tiếng hô như thế này!
Dialogue: 0,0:08:26.64,0:08:30.19,Default,,0,0,0,,Đến lúc đó đối thủ không thể nào là Shohoku,\Nmà là đội bóng giỏi của toàn quốc!
Dialogue: 0,0:08:30.81,0:08:36.18,Default,,0,0,0,,Sendoh! Sendoh! Sendoh! Sendoh!
Dialogue: 0,0:08:36.18,0:08:37.11,Default,,0,0,0,,[Từ tiếng hô của người xem,]
Dialogue: 0,0:08:37.25,0:08:39.60,Default,,0,0,0,,[mình đủ biết đàn anh Sendoh giỏi đến mức nào.]
Dialogue: 0,0:08:39.78,0:08:41.49,Default,,0,0,0,,[Không phải vì anh ấy đã ném được vào rổ,]
Dialogue: 0,0:08:41.62,0:08:43.69,Default,,0,0,0,,[mà là bởi vì\Nanh ấy đã thực hiện hai động tác giả.]
Dialogue: 0,0:08:44.38,0:08:45.86,Default,,0,0,0,,[Kỹ thuật bóng của Sendoh rất tuyệt vời.]
Dialogue: 0,0:08:46.02,0:08:48.67,Default,,0,0,0,,[Cho dù là một cú chuyền bóng\Nvới một cú chuyền bóng khác]
Dialogue: 0,0:08:48.84,0:08:52.36,Default,,0,0,0,,[đều có một kỹ thuật\Nmà người khác không có được.]
Dialogue: 0,0:08:53.44,0:08:54.92,Default,,0,0,0,,[Mình nhất định phải xem anh ấy là mục tiêu!]
Dialogue: 0,0:08:56.34,0:08:58.93,Default,,0,0,0,,Tiếng reo hò điên cuồng thật,\Ndồn dập cả tứ phía.
Dialogue: 0,0:08:59.76,0:09:02.39,Default,,0,0,0,,Chỉ hy vọng họ đừng bị\Nnhững tiếng reo hò này làm nhụt chí.
Dialogue: 0,0:09:05.92,0:09:09.18,Default,,0,0,0,,Này, Sakuragi Hanamichi, cậu đi đâu đấy?
Dialogue: 0,0:09:09.32,0:09:12.40,Default,,0,0,0,,Không có gì, em chỉ muốn kêu họ im miệng thôi!
Dialogue: 0,0:09:12.62,0:09:16.46,Default,,0,0,0,,Không được đi!\NVừa nãy cậu đã phạm lỗi kỹ thuật rồi!
Dialogue: 0,0:09:16.59,0:09:20.99,Default,,0,0,0,,Đáng ghét! Bọn mày ở trên đó làm gì?\NMau cổ vũ cho Shohoku đi!
Dialogue: 0,0:09:21.17,0:09:22.35,Default,,0,0,0,,Tôi kêu cậu ngồi xuống!
Dialogue: 0,0:09:23.06,0:09:27.46,Default,,0,0,0,,Lợi hại quá! Số 7 đội bạn sắp ném bóng vào rổ.
Dialogue: 0,0:09:27.59,0:09:30.04,Default,,0,0,0,,Tình hình bây giờ,\Nchúng ta hoàn toàn không đuổi kịp.
Dialogue: 0,0:09:30.27,0:09:32.04,Default,,0,0,0,,Chỉ có Rukawa có cách!
Dialogue: 0,0:09:32.76,0:09:34.66,Default,,0,0,0,,Sendoh mạnh hơn rất nhiều!
Dialogue: 0,0:09:41.20,0:09:43.35,Default,,0,0,0,,Một cú ném ba điểm, mau vào rổ nào!
Dialogue: 0,0:09:43.92,0:09:44.95,Default,,0,0,0,,Đáng tiếc!
Dialogue: 0,0:09:47.14,0:09:48.46,Default,,0,0,0,,Tốt lắm!
Dialogue: 0,0:09:49.59,0:09:50.99,Default,,0,0,0,,Mau lên, Sendoh!
Dialogue: 0,0:09:53.05,0:09:54.02,Default,,0,0,0,,Lại lại cậu ta!
Dialogue: 0,0:10:06.88,0:10:08.04,Default,,0,0,0,,[Lại dùng chiêu đấy!]
Dialogue: 0,0:10:24.79,0:10:25.67,Default,,0,0,0,,Tốt!
Dialogue: 0,0:10:25.83,0:10:29.63,Default,,0,0,0,,Tuyệt vời! Tuyệt vời!
Dialogue: 0,0:10:29.75,0:10:31.17,Default,,0,0,0,,Không hổ là Sendoh!
Dialogue: 0,0:10:31.73,0:10:35.66,Default,,0,0,0,,Vốn tưởng rằng anh ấy lại làm động tác giả,\Nnhưng không ngờ là tự mình ném bóng!
Dialogue: 0,0:10:36.00,0:10:39.92,Default,,0,0,0,,Trình độ siêu cao cấp! Chính là như thế!\NLợi hại! Lại hợi!
Dialogue: 0,0:10:45.76,0:10:47.88,Default,,0,0,0,,[Tốt lắm, trận đấu lần này thắng rồi.]
Dialogue: 0,0:10:51.33,0:10:54.31,Default,,0,0,0,,[Nhưng lúc này đây Taoka vẫn chưa phát hiện]
Dialogue: 0,0:10:54.46,0:10:58.42,Default,,0,0,0,,[kỹ thuật bóng siêu cao cấp này\Nđã khơi dậy sự phẫn nộ của hai người.]
Dialogue: 0,0:11:22.13,0:11:24.19,Default,,0,0,0,,- Cứ thế này mãi không được đâu.\N- Không thắng nổi rồi.
Dialogue: 0,0:11:24.30,0:11:26.28,Default,,0,0,0,,Hơn nữa Hanamichi còn chưa ra sân.
Dialogue: 0,0:11:27.64,0:11:28.54,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:11:28.99,0:11:31.55,Default,,0,0,0,,19-0, chẳng lẽ không có cách nào đảo ngược sao?
Dialogue: 0,0:11:31.67,0:11:32.63,Default,,0,0,0,,Một chút hy vọng cũng không có.
Dialogue: 0,0:11:32.78,0:11:36.57,Default,,0,0,0,,Sẽ... sẽ không thế đâu.\NMới nửa trận đầu, chắc chắn có thể đảo ngược.
Dialogue: 0,0:11:37.19,0:11:38.39,Default,,0,0,0,,[Nếu như Rukawa không bị đổi,]
Dialogue: 0,0:11:38.55,0:11:41.56,Default,,0,0,0,,[phải vào được một quả trước đã,\Nngăn chặn khí thế của Ryonan mới được.]
Dialogue: 0,0:11:41.88,0:11:45.40,Default,,0,0,0,,[Cố lên anh! Cố lên Rukawa!]
Dialogue: 0,0:11:49.45,0:11:53.52,Default,,0,0,0,,Vào một quả trước đã,\Ntừng quả từng quả lật ngược tình thế!
Dialogue: 0,0:11:53.52,0:11:55.26,Default,,0,0,0,,Bây giờ mới bắt đầu, mới bắt đầu.
Dialogue: 0,0:11:55.90,0:11:57.19,Default,,0,0,0,,- Yasuda!\N- Vâng.
Dialogue: 0,0:12:15.09,0:12:17.04,Default,,0,0,0,,Tuyệt lắm, lên nào!
Dialogue: 0,0:12:20.93,0:12:24.06,Default,,0,0,0,,Chết tiệt! Tỉnh táo lên!\NCái thằng Yasuda chết tiệt!
Dialogue: 0,0:12:24.06,0:12:25.82,Default,,0,0,0,,Là Yasuda, anh ấy là đàn anh!
Dialogue: 0,0:12:26.23,0:12:28.87,Default,,0,0,0,,Ryonan mạnh quá!
Dialogue: 0,0:12:28.87,0:12:31.29,Default,,0,0,0,,Chúng ta hoàn toàn không phải đối thủ của họ.
Dialogue: 0,0:12:31.29,0:12:33.03,Default,,0,0,0,,Các cậu lải nhải quá!
Dialogue: 0,0:12:43.57,0:12:46.80,Default,,0,0,0,,Một cú Alley-Oop,\Ncướp bóng trên không, rồi úp rổ trực tiếp.
Dialogue: 0,0:12:46.80,0:12:49.02,Default,,0,0,0,,Đừng mà!
Dialogue: 0,0:13:03.94,0:13:04.67,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:13:07.24,0:13:08.69,Default,,0,0,0,,Tới đây nào.
Dialogue: 0,0:13:12.55,0:13:16.11,Default,,0,0,0,,Cú nhảy tuyệt vời!\NCú chặn vừa nãy, Rukawa này...
Dialogue: 0,0:13:17.08,0:13:20.42,Default,,0,0,0,,[Lúc trước khi thấy sức bật của Sakuragi,\Ndù đã rất sốc,]
Dialogue: 0,0:13:20.72,0:13:22.95,Default,,0,0,0,,[nhưng sức bật của Rukawa\Ncũng không hề thua kém.]
Dialogue: 0,0:13:23.36,0:13:25.20,Default,,0,0,0,,[Đúng là không phải dạng thường.]
Dialogue: 0,0:13:25.83,0:13:27.62,Default,,0,0,0,,[Rukawa, tôi nhất định sẽ ghi nhớ cậu.]
Dialogue: 0,0:13:28.83,0:13:31.78,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:13:31.93,0:13:32.52,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:13:33.53,0:13:34.52,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:13:35.85,0:13:41.71,Default,,0,0,0,,[Rukawa, mặc dù tao không hy vọng Shohoku thua,\Nnhưng tao càng không thích mày giành hết mọi tiêu điểm!]
Dialogue: 0,0:13:45.38,0:13:46.12,Default,,0,0,0,,Uekusa!
Dialogue: 0,0:13:48.67,0:13:49.65,Default,,0,0,0,,Koshino!
Dialogue: 0,0:13:50.17,0:13:51.95,Default,,0,0,0,,Tuyệt vời! Cú chuyền bóng tuyệt vời!
Dialogue: 0,0:13:51.95,0:13:54.30,Default,,0,0,0,,Sao em có thể khen đội đối thủ hả?
Dialogue: 0,0:13:54.99,0:13:55.92,Default,,0,0,0,,Em xin lỗi.
Dialogue: 0,0:13:57.43,0:13:58.79,Default,,0,0,0,,[Nhưng mà giỏi thật sự!]
Dialogue: 0,0:13:59.06,0:14:01.37,Default,,0,0,0,,[Không ngờ lần nào\Ncũng giành mất bóng của mình.]
Dialogue: 0,0:14:01.37,0:14:04.18,Default,,0,0,0,,[Bóng của đàn anh Uekusa và đàn anh Koshino]
Dialogue: 0,0:14:04.31,0:14:05.45,Default,,0,0,0,,[cũng bị giành mất dễ như thế.]
Dialogue: 0,0:14:05.55,0:14:07.02,Default,,0,0,0,,[Sao có thể chuyền bóng tốt như vậy được?]
Dialogue: 0,0:14:07.13,0:14:10.69,Default,,0,0,0,,[Và còn cả tốc độ của cậu ta, không ai theo kịp.]
Dialogue: 0,0:14:11.53,0:14:13.79,Default,,0,0,0,,Tốt lắm, lên đi, Rukawa!
Dialogue: 0,0:14:17.11,0:14:18.04,Default,,0,0,0,,Sendoh!
Dialogue: 0,0:14:26.04,0:14:27.14,Default,,0,0,0,,Agaki!
Dialogue: 0,0:14:32.63,0:14:33.53,Default,,0,0,0,,Tinh Tinh Bự!
Dialogue: 0,0:14:33.97,0:14:36.06,Default,,0,0,0,,Nhìn đây, Tinh Tinh Bự úp rổ!
Dialogue: 0,0:14:40.84,0:14:42.50,Default,,0,0,0,,[Người đó chính là\Nđội trưởng Akagi của Shohoku?]
Dialogue: 0,0:14:42.81,0:14:45.43,Default,,0,0,0,,[Một cú úp rổ quá tốt,\Nhọ là học sinh cấp ba thật sao?]
Dialogue: 0,0:14:50.69,0:14:51.67,Default,,0,0,0,,Akagi!
Dialogue: 0,0:14:52.25,0:14:54.31,Default,,0,0,0,,Tốt lắm! Tốt lắm! Đúng là Tinh Tinh Bư!
Dialogue: 0,0:14:54.41,0:14:56.76,Default,,0,0,0,,Chẳng trách anh là người\Ncó năng lực nhất sau em!
Dialogue: 0,0:14:58.11,0:14:59.48,Default,,0,0,0,,Một cú úp rổ quá tốt!
Dialogue: 0,0:14:59.48,0:15:02.24,Default,,0,0,0,,Anh nhầm rồi, cú đó phải cho\Nnhiều điểm hơn mới đúng!
Dialogue: 0,0:15:02.24,0:15:03.11,Default,,0,0,0,,Đợi đã!
Dialogue: 0,0:15:03.12,0:15:07.26,Default,,0,0,0,,Này này, cho 10 điểm đi, được không,\Nđược không, đừng keo kiệt thế.
Dialogue: 0,0:15:07.87,0:15:10.23,Default,,0,0,0,,Đừng có chạy lung tung, thằng ngốc này!
Dialogue: 0,0:15:12.50,0:15:16.27,Default,,0,0,0,,- Được rồi, bắt đầu từ bây giờ.\N- Một quả cũng không cho họ vào!
Dialogue: 0,0:15:16.51,0:15:17.53,Default,,0,0,0,,Được!
Dialogue: 0,0:15:19.59,0:15:21.65,Default,,0,0,0,,Cuối cùng Shohoku\Ncũng đã lấy lại khí thế rồi!
Dialogue: 0,0:15:21.76,0:15:23.15,Default,,0,0,0,,Xông lên! Xông lên!
Dialogue: 0,0:15:23.27,0:15:24.76,Default,,0,0,0,,Bây giờ bắt đầu.
Dialogue: 0,0:15:24.97,0:15:27.52,Default,,0,0,0,,- Mọi người mau cổ vũ cho họ đi!\N- Vâng!
Dialogue: 0,0:15:27.63,0:15:32.83,Default,,0,0,0,,Phòng thủ! Phòng thủ! Phòng thủ!
Dialogue: 0,0:15:32.95,0:15:37.07,Default,,0,0,0,,Các cậu xem, bây giờ mới bắt đầu.\NKhông phải từ từ có hy vọng chiến thắng rồi à?
Dialogue: 0,0:15:37.78,0:15:38.91,Default,,0,0,0,,Phong thủy cũng có thể thay đổi mà!
Dialogue: 0,0:15:39.00,0:15:41.34,Default,,0,0,0,,Nhưng vẫn cách xa 17 điểm.
Dialogue: 0,0:15:41.43,0:15:43.56,Default,,0,0,0,,Không sao, chắc chắn sẽ thắng được.
Dialogue: 0,0:15:48.33,0:15:52.49,Default,,0,0,0,,- [Tên đó phản ứng nhanh nhạy hơn rồi.]\N- [Bên Ryonan có Uozumi và Sendoh,]
Dialogue: 0,0:15:52.70,0:15:54.93,Default,,0,0,0,,[nhưng bên mình cũng có\Nđội trưởng Akagi Takenori và Rukawa Kaede!]
Dialogue: 0,0:15:54.99,0:15:56.44,Default,,0,0,0,,[Chúng ta đã khác so với năm ngoái rồi.]
Dialogue: 0,0:15:56.93,0:16:00.62,Default,,0,0,0,,Phòng thủ! Phòng thủ! Phòng thủ!
Dialogue: 0,0:16:01.10,0:16:04.67,Default,,0,0,0,,Cú úp rổ vừa nãy của Akagi\Nđã khiến cho khí thế cả đội mạnh hơn nhiều.
Dialogue: 0,0:16:05.23,0:16:07.39,Default,,0,0,0,,Shohoku đúng là phụ thuộc vào Akagi.
Dialogue: 0,0:16:07.93,0:16:12.85,Default,,0,0,0,,[Nhưng trước lúc đó, nhờ có Rukawa lớp 10\Nthì Akagi mới có được cú úp rổ đấy.]
Dialogue: 0,0:16:15.40,0:16:18.05,Default,,0,0,0,,[Nếu năm nay vẫn xem đấy là đội cũ của Akagi,]
Dialogue: 0,0:16:18.20,0:16:19.67,Default,,0,0,0,,[e là phải chịu thiệt rồi đây.]
Dialogue: 0,0:16:24.90,0:16:28.24,Default,,0,0,0,,- Đến lúc cho em ra sân rồi, Bố Già!\N- Cậu dừng tay lại!
Dialogue: 0,0:16:29.17,0:16:32.90,Default,,0,0,0,,[Huấn luyện viên Anzai,\Nnăm nay ông có được thành viên mới mạnh đấy.]
Dialogue: 0,0:16:33.32,0:16:34.81,Default,,0,0,0,,[Mặc dù cũng có một đứa kỳ quái.]
Dialogue: 0,0:16:36.87,0:16:37.76,Default,,0,0,0,,Uekusa!
Dialogue: 0,0:16:40.43,0:16:41.09,Default,,0,0,0,,Lên nào Ikeda!
Dialogue: 0,0:16:45.57,0:16:47.98,Default,,0,0,0,,Đội hình càng lúc càng mạnh!
Dialogue: 0,0:16:48.14,0:16:51.01,Default,,0,0,0,,Ikegami, nếu không được thì đừng ném!
Dialogue: 0,0:16:57.64,0:16:58.33,Default,,0,0,0,,Đây!
Dialogue: 0,0:17:04.44,0:17:05.57,Default,,0,0,0,,Hay lắm Agaki!
Dialogue: 0,0:17:08.41,0:17:08.88,Default,,0,0,0,,Tốt!
Dialogue: 0,0:17:13.25,0:17:17.18,Default,,0,0,0,,Bây giờ thắng thêm một quả nữa, chèn ép bọn họ!
Dialogue: 0,0:17:17.34,0:17:17.82,Default,,0,0,0,,Rõ!
Dialogue: 0,0:17:18.88,0:17:22.07,Default,,0,0,0,,[Năng lực lãnh đạo khiến người khác\Nkhâm phục, đúng là trụ cột của cả đội!]
Dialogue: 0,0:17:22.38,0:17:24.40,Default,,0,0,0,,[Đây mới đúng là đội trưởng.]
Dialogue: 0,0:17:25.08,0:17:27.16,Default,,0,0,0,,[Agaki cũng được, Rukawa cũng được,]
Dialogue: 0,0:17:27.26,0:17:28.85,Default,,0,0,0,,[người có thực lực càng lúc càng nhiều.]
Dialogue: 0,0:17:29.40,0:17:30.65,Default,,0,0,0,,[Hơn nữa trong Shohoku\Ncòn giấu một Sakuragi,]
Dialogue: 0,0:17:30.76,0:17:35.13,Default,,0,0,0,,[người từng chiến thắng Akagi,\Ncũng là đội trưởng kỳ kế tiếp.]
Dialogue: 0,0:17:35.83,0:17:39.52,Default,,0,0,0,,[Dù cho Ryonan giỏi thế nào đi nữa\Nthì sau này cũng phải thi đấu cực khổ hơn.]
Dialogue: 0,0:17:40.46,0:17:45.13,Default,,0,0,0,,Phòng thủ!
Dialogue: 0,0:17:45.70,0:17:46.43,Default,,0,0,0,,Koshino!
Dialogue: 0,0:17:49.84,0:17:50.60,Default,,0,0,0,,Đến đây!
Dialogue: 0,0:18:00.49,0:18:01.85,Default,,0,0,0,,Phòng thủ mạnh quá!
Dialogue: 0,0:18:01.97,0:18:04.91,Default,,0,0,0,,Đội trưởng Uozumi lợi hại như thế\Ncũng không cách nào làm đươc.
Dialogue: 0,0:18:05.24,0:18:07.80,Default,,0,0,0,,Đừng trốn tránh, Uozumi,\Ngắng lên, gắng lên!
Dialogue: 0,0:18:11.06,0:18:12.65,Default,,0,0,0,,Ba giây, ba giây!
Dialogue: 0,0:18:15.33,0:18:16.93,Default,,0,0,0,,Ba giây, quá giờ!
Dialogue: 0,0:18:18.23,0:18:19.59,Default,,0,0,0,,Tốt quá!
Dialogue: 0,0:18:21.24,0:18:22.83,Default,,0,0,0,,Được lắm!
Dialogue: 0,0:18:24.30,0:18:25.63,Default,,0,0,0,,Quy tắc ba giây
Dialogue: 0,0:18:25.75,0:18:28.44,Default,,0,0,0,,chính là không được đứng quá ba giây
Dialogue: 0,0:18:28.62,0:18:30.50,Default,,0,0,0,,trong khu vực giới hạn của đối phương.
Dialogue: 0,0:18:30.67,0:18:33.79,Default,,0,0,0,,Nếu vi phạm, sẽ do đội đối phương giao bóng.
Dialogue: 0,0:18:36.51,0:18:38.61,Default,,0,0,0,,Hình như tình hình đã thay đổi.
Dialogue: 0,0:18:38.86,0:18:42.13,Default,,0,0,0,,Quái vật của Shohoku không thể\Nthua quái vật của Ryonan!
Dialogue: 0,0:18:42.27,0:18:44.83,Default,,0,0,0,,Nhưng anh ta lại là anh trai của Haruko,
Dialogue: 0,0:18:44.95,0:18:46.12,Default,,0,0,0,,đến giờ tôi vẫn không thể tin được.
Dialogue: 0,0:18:46.21,0:18:47.35,Default,,0,0,0,,Đồng cảm!
Dialogue: 0,0:18:47.77,0:18:49.24,Default,,0,0,0,,Anh trai cậu giỏi quá!
Dialogue: 0,0:18:50.29,0:18:52.55,Default,,0,0,0,,Đúng vậy, quả nhiên là đội trưởng!
Dialogue: 0,0:18:53.17,0:18:55.80,Default,,0,0,0,,Anh ơi, cố lên!
Dialogue: 0,0:18:57.41,0:19:00.10,Default,,0,0,0,,Haruko... Haruko cũng đến sao?
Dialogue: 0,0:19:01.05,0:19:01.95,Default,,0,0,0,,Cậu ấy đến rồi!
Dialogue: 0,0:19:02.56,0:19:03.72,Default,,0,0,0,,Tai thính thật!
Dialogue: 0,0:19:04.86,0:19:07.83,Default,,0,0,0,,Cậu ấy mặc đồ thường cũng rất đẹp,\Nthắt bím cũng rất xinh đẹp!
Dialogue: 0,0:19:08.93,0:19:09.95,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:19:18.99,0:19:22.38,Default,,0,0,0,,Còn chưa đến lượt vũ khí bí mật ra sân sao?\NMau cho em ra sân đi, ông già này!
Dialogue: 0,0:19:22.38,0:19:23.54,Default,,0,0,0,,Đã kêu cậu không được làm vậy mà!
Dialogue: 0,0:19:27.13,0:19:27.80,Default,,0,0,0,,Được lắm!
Dialogue: 0,0:19:28.01,0:19:29.29,Default,,0,0,0,,Giành được bóng bật bảng rồi!
Dialogue: 0,0:19:29.44,0:19:30.79,Default,,0,0,0,,Ném đi, Akagi!
Dialogue: 0,0:19:32.05,0:19:33.11,Default,,0,0,0,,Đừng xem thường người khác!
Dialogue: 0,0:19:37.27,0:19:38.99,Default,,0,0,0,,Ôi đáng tiếc quá!
Dialogue: 0,0:19:47.02,0:19:47.85,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:19:54.41,0:19:56.08,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:19:57.12,0:19:58.45,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:20:04.23,0:20:08.43,Default,,0,0,0,,Shohoku! Shohoku! Shohoku!
Dialogue: 0,0:20:11.13,0:20:13.63,Default,,0,0,0,,Rukawa! Rukawa! Rukawa!
Dialogue: 0,0:20:13.90,0:20:16.90,Default,,0,0,0,,Shohoku! Shohoku! Shohoku!
Dialogue: 0,0:20:21.14,0:20:22.11,Default,,0,0,0,,[Nửa trận đầu đã kết thúc.]
Dialogue: 0,0:20:22.49,0:20:27.66,Default,,0,0,0,,[Khi trận đấu bắt đầu đã bị kéo xa khoảng cách 19-0,\Nvốn khiến cho Shohoku không biết nên làm thế nào.]
Dialogue: 0,0:20:27.84,0:20:31.99,Default,,0,0,0,,[Nhưng với trụ cột của đội,\Nđội trưởng Akagi và thành viên siêu mạnh.]
Dialogue: 0,0:20:32.10,0:20:33.47,Default,,0,0,0,,[Với cú úp rổ của Rukawa,\Nkhí thế của đội cũng mạnh lên!]
Dialogue: 0,0:20:34.23,0:20:38.15,Default,,0,0,0,,[Nửa trận đầu Akagi đạt được 17 điểm,\NRukawa đạt được 14 điểm.]
Dialogue: 0,0:20:38.66,0:20:39.64,Default,,0,0,0,,Chúng ta thắng rồi.
Dialogue: 0,0:20:39.89,0:20:41.79,Default,,0,0,0,,- Nửa trận sau chúng ta phải duy trì như thế.\N- Vâng!
Dialogue: 0,0:20:42.64,0:20:46.04,Default,,0,0,0,,[Ngoài ra, Kogure đạt 7 điểm,\NYasuda và Shiozaki mỗi người 2 điểm.]
Dialogue: 0,0:20:46.38,0:20:47.82,Default,,0,0,0,,[Đối mặt với đối thủ mạnh là Ryonan,]
Dialogue: 0,0:20:47.94,0:20:51.40,Default,,0,0,0,,[trong vòng năm phút, Shohoku đã rút ngắn\Nkhoảng cách và Ryonan với tỉ số 50-42.]
Dialogue: 0,0:20:51.55,0:20:54.35,Default,,0,0,0,,[Cuối cùng với khoảng cách\Ntám điểm kết thúc nửa trận đầu.]
Dialogue: 0,0:20:55.08,0:21:00.64,Default,,0,0,0,,[Nhưng đến lúc kết thúc nửa trận đầu,\NHanamichi vẫn chưa có cơ hội ra sân.]
Dialogue: 0,0:21:06.61,0:21:10.26,Default,,0,0,0,,♫ Đôi mắt luôn hướng về phía cậu ♫
Dialogue: 0,0:21:10.43,0:21:14.57,Default,,0,0,0,,♫ Từ lúc vừa mới gặp cho đến hiện tại ♫
Dialogue: 0,0:21:14.63,0:21:18.33,Default,,0,0,0,,♫ Chỉ cần có cậu ở bên ♫
Dialogue: 0,0:21:18.39,0:21:22.15,Default,,0,0,0,,♫ Những thứ khác đều không cần a ♫
Dialogue: 0,0:21:22.85,0:21:26.59,Default,,0,0,0,,♫ Căng thẳng tột độ vì ước mơ ♫
Dialogue: 0,0:21:31.77,0:21:36.43,Default,,0,0,0,,♫ Nhìn thấy vẻ mặt cậu vui như thế ♫
Dialogue: 0,0:21:36.57,0:21:39.91,Default,,0,0,0,,♫ Không có ngụy trang gì cả ♫
Dialogue: 0,0:21:39.99,0:21:45.95,Default,,0,0,0,,♫ Luôn mang theo máy nhắn tin\Nđể cậu có thể tìm mình bất cứ lúc nào ♫
Dialogue: 0,0:21:46.61,0:21:52.05,Default,,0,0,0,,♫ Am hiểu hơn về xe ♫
Dialogue: 0,0:21:52.37,0:21:55.95,Default,,0,0,0,,♫ Cũng đang cố gắng\Nhọc cách tự chăm sóc mình ♫
Dialogue: 0,0:21:56.41,0:22:00.09,Default,,0,0,0,,♫ Tuy là có hơi bối rối ♫
Dialogue: 0,0:22:00.43,0:22:06.29,Default,,0,0,0,,♫ Nhưng vẫn quyết định\Ntheo người này cả đời ♫
Dialogue: 0,0:22:08.63,0:22:12.17,Default,,0,0,0,,♫ Trong mắt chỉ có mỗi mình cậu ♫
Dialogue: 0,0:22:12.25,0:22:16.73,Default,,0,0,0,,♫ Một mình chờ đợi\Ntrong căn phòng của đôi ta ♫
Dialogue: 0,0:22:16.75,0:22:24.45,Default,,0,0,0,,♫ Nụ cười của cậu\Ngiống như là cái khóa màu hoa hồng ♫
Dialogue: 0,0:22:24.87,0:22:32.61,Default,,0,0,0,,♫ Tiến về trước, cô gái không có ước mơ ♫
Dialogue: 0,0:22:36.65,0:22:39.30,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:39.68,0:22:42.98,Default,,0,0,0,,Đã đến nửa trận sau rồi,\Ncòn để em bí mật đến khi nào đây?
Dialogue: 0,0:22:43.10,0:22:46.43,Default,,0,0,0,,Sendoh đang khiêu khích Sakuragi.
Dialogue: 0,0:22:46.46,0:22:48.56,Default,,0,0,0,,Shohoku không phải\Nchỉ có Tinh Tinh Bự với Rukawa.
Dialogue: 0,0:22:48.64,0:22:50.00,Default,,0,0,0,,Cứ để Sendoh cho em!
Dialogue: 0,0:22:50.00,0:22:52.05,Default,,0,0,0,,Cuối cùng cũng đến lượt Sakuragi rồi chứ?
Dialogue: 0,0:22:52.16,0:22:54.81,Default,,0,0,0,,Con át chủ bài của Shohoku đúng là Sakuragi!
Dialogue: 0,0:22:55.02,0:22:56.91,Default,,0,0,0,,Tôi là thiên tài đấy!
Dialogue: 0,0:22:57.02,0:22:59.47,Default,,0,0,0,,Đợi mà xem đi, đám người phàm!
Dialogue: 0,0:22:59.54,0:23:00.41,Default,,0,0,0,,"Cao thủ bóng rổ!"
Dialogue: 0,0:23:00.52,0:23:02.35,Default,,0,0,0,,"Hanamichi hồi hộp với việc lần đầu ra sân."
Dialogue: 0,0:23:02.50,0:23:03.87,Default,,0,0,0,,Đừng bỏ qua đấy.
