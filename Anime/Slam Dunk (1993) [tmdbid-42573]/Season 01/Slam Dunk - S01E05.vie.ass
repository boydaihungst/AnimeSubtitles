Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:04.38,0:00:10.69,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:28.84,0:00:35.57,Default,,0,0,0,,♫ Ánh mặt trời chói rọi phía sau lưng,\Ntôi bước trên con đường này ♫
Dialogue: 0,0:00:35.74,0:00:42.42,Default,,0,0,0,,♫ Cũng như thường lệ, lại bị vỗ vai ♫
Dialogue: 0,0:00:42.44,0:00:48.96,Default,,0,0,0,,♫ Cậu là nữ thần của tôi, không có lý do gì cả ♫
Dialogue: 0,0:00:48.98,0:00:54.45,Default,,0,0,0,,♫ Nhưng lại chưa từng khoác lấy tay tôi ♫
Dialogue: 0,0:00:54.47,0:01:01.03,Default,,0,0,0,,♫ Không biết từ lúc nào,\Nánh mắt đã không thể rời đi ♫
Dialogue: 0,0:01:01.05,0:01:07.77,Default,,0,0,0,,♫ Không buông ra, không do dự,\Nđiên cuồng vì cậu ♫
Dialogue: 0,0:01:07.80,0:01:14.50,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:01:14.80,0:01:21.33,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:01:21.36,0:01:28.38,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm tiến lên một bước ♫
Dialogue: 0,0:01:28.72,0:01:36.29,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:01:48.72,0:01:52.17,Default,,0,0,0,,[Cho dù thế nào Sakuragi Hanamichi\Ncũng phải nghĩ cách giành được trái tim]
Dialogue: 0,0:01:52.32,0:01:56.12,Default,,0,0,0,,[của Akagi Haruko, đồng thời muốn chính thức\Ntrở thành thành viên đội bóng rổ Shohoku.]
Dialogue: 0,0:02:02.20,0:02:04.79,Default,,0,0,0,,[Nhưng đời không như là mơ.]
Dialogue: 0,0:02:04.80,0:02:08.18,Default,,0,0,0,,[Sakuragi vẫn bị cho tập luyện ở góc sân.]
Dialogue: 0,0:02:14.09,0:02:18.31,Default,,0,0,0,,[Ngoài ra, Rukawa Kaede vang danh trong\Nlời đồn cũng gia nhập vào câu lạc bộ bóng rổ.]
Dialogue: 0,0:02:19.89,0:02:22.57,Default,,0,0,0,,[Trông Sakuragi sốt ruột không chịu nổi.]
Dialogue: 0,0:02:23.15,0:02:31.11,Default,,0,0,0,,[Một buổi chiều ủ rũ]
Dialogue: 0,0:02:25.15,0:02:26.80,Default,,0,0,0,,[Một buổi chiều ủ rũ.]
Dialogue: 0,0:02:36.49,0:02:39.14,Default,,0,0,0,,Hanamichi vào đội đã một tuần rồi nhỉ?
Dialogue: 0,0:02:39.42,0:02:41.22,Default,,0,0,0,,So với trước đây, nó đã tiến bộ chưa?
Dialogue: 0,0:02:41.30,0:02:43.39,Default,,0,0,0,,Tao thấy thằng này cũng sắp bỏ cuộc rồi.
Dialogue: 0,0:02:43.48,0:02:48.51,Default,,0,0,0,,Sao thằng đó có thể mê bóng rổ\Nmột cách nghiêm túc được.
Dialogue: 0,0:02:50.94,0:02:54.67,Default,,0,0,0,,- Chúng ta đến gần xem đi.\N- Không chừng nó đã không ở đó nữa rồi.
Dialogue: 0,0:02:55.54,0:02:57.10,Default,,0,0,0,,Ngầu quá.
Dialogue: 0,0:03:09.98,0:03:11.01,Default,,0,0,0,,Nhìn thấy chưa,
Dialogue: 0,0:03:12.39,0:03:14.51,Default,,0,0,0,,cậu ta hoàn ta không chú ý\Nđến đối thủ của mình.
Dialogue: 0,0:03:15.01,0:03:17.22,Default,,0,0,0,,Quả thật giống như\Nmọc một cặp mắt trên lưng vậy.
Dialogue: 0,0:03:20.73,0:03:22.26,Default,,0,0,0,,Là Rukawa.
Dialogue: 0,0:03:22.27,0:03:25.25,Default,,0,0,0,,Hình như tên đó rất có tiếng\Ntrong giới bóng rổ của tỉnh, thành phố.
Dialogue: 0,0:03:25.76,0:03:29.15,Default,,0,0,0,,Rukawa đẹp trai quá.
Dialogue: 0,0:03:29.32,0:03:32.49,Default,,0,0,0,,Toàn bộ đám con gái đó đều là fan của Rukawa.
Dialogue: 0,0:03:33.58,0:03:36.04,Default,,0,0,0,,Bên này, đến bên này rồi.
Dialogue: 0,0:03:37.80,0:03:40.91,Default,,0,0,0,,Có vẻ Haruko cũng rất mê nó.
Dialogue: 0,0:03:42.54,0:03:43.63,Default,,0,0,0,,Thế mới nói.
Dialogue: 0,0:03:47.74,0:03:50.09,Default,,0,0,0,,Tốt lắm, Rukawa.
Dialogue: 0,0:03:51.50,0:03:52.87,Default,,0,0,0,,Rất có sức đấy.
Dialogue: 0,0:03:53.42,0:03:55.82,Default,,0,0,0,,Xem ra sắp được thấy\Ndáng vẻ Hanamichi bùng nổ rồi.
Dialogue: 0,0:03:56.11,0:03:56.94,Default,,0,0,0,,Có lý.
Dialogue: 0,0:03:57.59,0:03:58.72,Default,,0,0,0,,Chậm quá.
Dialogue: 0,0:04:00.58,0:04:04.26,Default,,0,0,0,,[Đáng ghét, không ngờ lại dùng thái độ này\Nđể đối xử với đội trưởng kỳ sau như mình.]
Dialogue: 0,0:04:04.34,0:04:07.47,Default,,0,0,0,,[Con Tinh Tinh thối này,\Ncả tuần chỉ bắt mình chơi cái này.]
Dialogue: 0,0:04:08.11,0:04:10.85,Default,,0,0,0,,Cậu đang làm gì thế?\NPhải nhúc nhích chân, chân của cậu.
Dialogue: 0,0:04:11.77,0:04:14.35,Default,,0,0,0,,[Nếu như vậy thì không phải\Nkhông có cơ hội úp rổ rồi sao?]
Dialogue: 0,0:04:14.53,0:04:17.25,Default,,0,0,0,,[Hiếm khi Haruko vất vả dạy mình.]
Dialogue: 0,0:04:17.34,0:04:20.33,Default,,0,0,0,,[Đáng ghét, vốn không nên như vậy mà...]
Dialogue: 0,0:04:21.64,0:04:23.46,Default,,0,0,0,,Sakuragi, trông cả vào cậu đó.
Dialogue: 0,0:04:23.77,0:04:26.70,Default,,0,0,0,,Tương lai của đội bóng rổ Shohoku\Nnhờ cả vào cậu đó.
Dialogue: 0,0:04:41.11,0:04:43.14,Default,,0,0,0,,Sakuragi, úp rổ đẹp lắm.
Dialogue: 0,0:04:43.23,0:04:45.08,Default,,0,0,0,,Chúng ta phải nhờ vào cậu rồi.
Dialogue: 0,0:04:45.27,0:04:46.76,Default,,0,0,0,,Không vấn đề, cứ giao cho em, đội trưởng.
Dialogue: 0,0:04:46.84,0:04:49.59,Default,,0,0,0,,Sakuragi, mình sẽ mãi mãi ủng hộ cậu.
Dialogue: 0,0:04:49.67,0:04:52.30,Default,,0,0,0,,Thế nên cậu hãy dẫn theo mình\Nđến đại hội toàn quốc nhé?
Dialogue: 0,0:04:52.44,0:04:54.88,Default,,0,0,0,,Haruko, mình hứa với cậu.
Dialogue: 0,0:04:54.97,0:04:58.56,Default,,0,0,0,,Sakuragi, hôm nay\Nmình đợi cậu tập luyện xong,
Dialogue: 0,0:04:58.72,0:05:00.17,Default,,0,0,0,,chúng ta cùng về nhé.
Dialogue: 0,0:05:01.41,0:05:02.94,Default,,0,0,0,,Được, Haruko.
Dialogue: 0,0:05:03.81,0:05:04.64,Default,,0,0,0,,Chúng ta đi thôi.
Dialogue: 0,0:05:08.87,0:05:11.41,Default,,0,0,0,,Hakuro nhờ cậu chăm sóc đó, Sakuraki.
Dialogue: 0,0:05:12.91,0:05:15.67,Default,,0,0,0,,Đừng dựa vào mình mà.
Dialogue: 0,0:05:15.75,0:05:18.06,Default,,0,0,0,,Không sao, người ta muốn như vậy mà.
Dialogue: 0,0:05:20.06,0:05:20.95,Default,,0,0,0,,Thật là,
Dialogue: 0,0:05:22.00,0:05:24.00,Default,,0,0,0,,mình thật sự hết cách với cậu.
Dialogue: 0,0:05:24.31,0:05:26.40,Default,,0,0,0,,Người hết cách là cậu đó.
Dialogue: 0,0:05:26.77,0:05:29.99,Default,,0,0,0,,[Đáng ghét, vì sao hiện thực lại như vậy?]
Dialogue: 0,0:05:30.49,0:05:32.79,Default,,0,0,0,,[Cô gái này\Ncũng là tay sai của tên Tinh Tinh Bự đó.]
Dialogue: 0,0:05:33.13,0:05:35.58,Default,,0,0,0,,Được rồi, tiếp theo là dẫn bóng cơ bản.
Dialogue: 0,0:05:35.73,0:05:38.82,Default,,0,0,0,,[Lại là cơ bản, mình đã chịu đủ rồi.]
Dialogue: 0,0:05:39.01,0:05:40.91,Default,,0,0,0,,Nào, đứng lên nào! Đứng lên nào!
Dialogue: 0,0:05:41.91,0:05:45.90,Default,,0,0,0,,Quản lý diêm dúa đó cũng biết\Nthêm dầu vào lửa ghê.
Dialogue: 0,0:05:45.98,0:05:47.39,Default,,0,0,0,,Trùng hợp là mẫu người tao thích.
Dialogue: 0,0:05:47.42,0:05:48.91,Default,,0,0,0,,Không hỏi mày vấn đề này.
Dialogue: 0,0:05:49.56,0:05:50.96,Default,,0,0,0,,Cũng sắp bắt đầu rồi đó.
Dialogue: 0,0:05:51.95,0:05:53.31,Default,,0,0,0,,Ayako,
Dialogue: 0,0:05:53.39,0:05:56.26,Default,,0,0,0,,rốt cuộc thì phải tới đợi khi nào\Nem mới có thể tập luyện cùng mọi người?
Dialogue: 0,0:05:58.02,0:06:02.06,Default,,0,0,0,,Em cũng rất muốn\Nsớm luyện được kỹ thuật úp rổ.
Dialogue: 0,0:06:02.09,0:06:05.37,Default,,0,0,0,,Cậu phải tập luyện cơ bản trước mới được.
Dialogue: 0,0:06:05.55,0:06:07.67,Default,,0,0,0,,Nói thế nào thì cậu vẫn là người mới tập.
Dialogue: 0,0:06:13.30,0:06:15.04,Default,,0,0,0,,Sakuragi cậu ấy sao thế?
Dialogue: 0,0:06:15.16,0:06:16.97,Default,,0,0,0,,Ví dụ như muốn giống như vậy.
Dialogue: 0,0:06:19.53,0:06:22.65,Default,,0,0,0,,Những thứ này cậu đều phải\Nluyện thành thạo trước mới được.
Dialogue: 0,0:06:28.84,0:06:30.07,Default,,0,0,0,,Cậu hiểu chưa, Hanamichi?
Dialogue: 0,0:06:31.93,0:06:33.86,Default,,0,0,0,,Hóa ra là thế, vậy thì được thôi!
Dialogue: 0,0:06:48.08,0:06:50.01,Default,,0,0,0,,Nhanh quá!
Dialogue: 0,0:06:52.49,0:06:54.39,Default,,0,0,0,,Sakuragi giỏi quá!
Dialogue: 0,0:06:55.84,0:06:57.31,Default,,0,0,0,,Giỏi quá!
Dialogue: 0,0:07:06.43,0:07:07.52,Default,,0,0,0,,Thế nào?
Dialogue: 0,0:07:07.92,0:07:09.76,Default,,0,0,0,,Cậu giỏi lắm, Sakuragi Hanamichi.
Dialogue: 0,0:07:09.85,0:07:12.91,Default,,0,0,0,,Giỏi thật,\Nchẳng giống người mới tập chút nào.
Dialogue: 0,0:07:13.13,0:07:16.61,Default,,0,0,0,,Trước đây tên đó còn từng đấu thắng Akagi mà.
Dialogue: 0,0:07:17.07,0:07:18.27,Default,,0,0,0,,Quả nhiên không đơn giản.
Dialogue: 0,0:07:20.12,0:07:23.34,Default,,0,0,0,,Chỉ cần bảo cậu ấy chịu khó tập luyện,\Nkhông chừng sẽ trở thành tuyển thủ giỏi.
Dialogue: 0,0:07:24.45,0:07:25.43,Default,,0,0,0,,Đúng không, Akagi?
Dialogue: 0,0:07:29.05,0:07:32.44,Default,,0,0,0,,Đâu có, đối với người được đề cử làm\Nđội trưởng kỳ sau như tôi nó chẳng là gì cả.
Dialogue: 0,0:07:33.14,0:07:35.51,Default,,0,0,0,,Nói hay lắm, Sakuragi, có chí khí!
Dialogue: 0,0:07:36.48,0:07:39.27,Default,,0,0,0,,Như vậy là có thể\Ntập luyện cùng mọi người rồi chứ?
Dialogue: 0,0:07:40.25,0:07:41.34,Default,,0,0,0,,Cậu muốn đi đâu?
Dialogue: 0,0:07:42.56,0:07:44.81,Default,,0,0,0,,Không có, đi tập bóng cùng mọi người.
Dialogue: 0,0:07:45.35,0:07:46.15,Default,,0,0,0,,Đi tập luyện.
Dialogue: 0,0:08:38.68,0:08:39.51,Default,,0,0,0,,Sắp rồi.
Dialogue: 0,0:08:44.00,0:08:46.04,Default,,0,0,0,,Cậu không sao chứ, Sakuragi?
Dialogue: 0,0:08:46.43,0:08:47.74,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:08:48.72,0:08:49.65,Default,,0,0,0,,Sắp rồi sao?
Dialogue: 0,0:08:52.20,0:08:55.88,Default,,0,0,0,,Vì sao chỉ có tôi là phải\Ntrốn trong góc luyện tập?
Dialogue: 0,0:08:55.96,0:08:57.32,Default,,0,0,0,,Tôi đã không chịu nổi rồi.
Dialogue: 0,0:08:57.40,0:08:58.26,Default,,0,0,0,,Quả nhiên như vậy.
Dialogue: 0,0:08:58.34,0:09:00.04,Default,,0,0,0,,Đến lúc chúng ta xuất hiện rồi.
Dialogue: 0,0:09:00.98,0:09:03.76,Default,,0,0,0,,- Hanamichi.\N- Hanamichi bình tĩnh đi.
Dialogue: 0,0:09:05.36,0:09:06.58,Default,,0,0,0,,Bớt ầm ĩ đi.
Dialogue: 0,0:09:13.98,0:09:15.65,Default,,0,0,0,,Làm chuyện vô bổ...
Dialogue: 0,0:09:16.14,0:09:18.17,Default,,0,0,0,,Rốt cuộc mấy cậu đang làm gì thế?
Dialogue: 0,0:09:18.94,0:09:20.43,Default,,0,0,0,,[Sakuragi...]
Dialogue: 0,0:09:20.52,0:09:21.99,Default,,0,0,0,,Đừng động vào bóng, đưa cho tôi.
Dialogue: 0,0:09:23.06,0:09:24.02,Default,,0,0,0,,Mấy người
Dialogue: 0,0:09:24.04,0:09:27.16,Default,,0,0,0,,cho rằng ai lau số bóng này hả?
Dialogue: 0,0:09:27.25,0:09:28.93,Default,,0,0,0,,Trả cho tôi, trả cho tôi.
Dialogue: 0,0:09:28.96,0:09:31.26,Default,,0,0,0,,Sakuragi, tên khốn này.
Dialogue: 0,0:09:31.52,0:09:33.20,Default,,0,0,0,,Vì sao lại lôi chuyện cũ\Ncủa một tuần trước ra hả?
Dialogue: 0,0:09:33.28,0:09:36.43,Default,,0,0,0,,Dẫn bóng 500 lần, bắt đầu lại!
Dialogue: 0,0:09:36.45,0:09:38.76,Default,,0,0,0,,Bớt lải nhải đi, cái tên Tinh Tinh này.
Dialogue: 0,0:09:38.84,0:09:42.08,Default,,0,0,0,,Rõ ràng anh thua tôi,\Nanh lại trêu đùa tôi như vậy.
Dialogue: 0,0:09:42.30,0:09:43.44,Default,,0,0,0,,Trêu đùa cậu?
Dialogue: 0,0:09:51.83,0:09:54.15,Default,,0,0,0,,Lần đó chỉ nhờ cậu may mắn mà thôi.
Dialogue: 0,0:09:58.53,0:10:00.48,Default,,0,0,0,,E rằng đây mới là gương mặt thật của cậu ta.
Dialogue: 0,0:10:02.49,0:10:04.73,Default,,0,0,0,,[Phải đi ngăn cậu ấy, nhưng đáng sợ quá.]
Dialogue: 0,0:10:06.10,0:10:10.11,Default,,0,0,0,,Yohei! Yohei, làm ơn hãy mau ngăn cản bọn họ.
Dialogue: 0,0:10:10.20,0:10:12.14,Default,,0,0,0,,Không phải vừa nãy\Ncậu cũng nhìn thấy rồi sao?
Dialogue: 0,0:10:12.22,0:10:13.52,Default,,0,0,0,,Đây là kết quả.
Dialogue: 0,0:10:13.60,0:10:14.90,Default,,0,0,0,,Sau này tôi sẽ không nghe lời anh nữa.
Dialogue: 0,0:10:14.99,0:10:17.31,Default,,0,0,0,,Anh nhìn cho kỹ đây,
Dialogue: 0,0:10:17.39,0:10:18.40,Default,,0,0,0,,đây là úp rổ.
Dialogue: 0,0:10:18.65,0:10:20.43,Default,,0,0,0,,Tên ngu này.
Dialogue: 0,0:10:28.22,0:10:29.92,Default,,0,0,0,,Cậu hoàn toàn không hiểu thể thao là gì.
Dialogue: 0,0:10:30.14,0:10:33.65,Default,,0,0,0,,Lẽ nào cậu cũng không hiểu\Ncơ bản quan trọng cỡ nào sao?
Dialogue: 0,0:10:34.20,0:10:35.80,Default,,0,0,0,,Cậu biết úp rổ thì thế nào?
Dialogue: 0,0:10:36.03,0:10:39.43,Default,,0,0,0,,Người không biết cơ bản\Nhoàn toàn không thể thi đấu được.
Dialogue: 0,0:10:44.15,0:10:46.25,Default,,0,0,0,,Anh dám đá tôi.
Dialogue: 0,0:10:46.34,0:10:49.94,Default,,0,0,0,,Cái tên đáng ghét này, anh xem đây.
Dialogue: 0,0:10:52.54,0:10:53.41,Default,,0,0,0,,Đội trưởng!
Dialogue: 0,0:10:53.80,0:10:55.46,Default,,0,0,0,,Đúng là rối nùi.
Dialogue: 0,0:11:00.58,0:11:04.03,Default,,0,0,0,,Đáng ghét, tôi chỉ muốn úp rổ.
Dialogue: 0,0:11:04.24,0:11:06.07,Default,,0,0,0,,Anh cứ để tôi ném,\Nkhông phải xong chuyện rồi sao?
Dialogue: 0,0:11:06.65,0:11:11.62,Default,,0,0,0,,Đừng nói nhảm nhiều vậy,\Ncậu là người ngoài ngành chẳng hiểu gì cả.
Dialogue: 0,0:11:12.96,0:11:14.96,Default,,0,0,0,,Cậu muốn đi đâu, Sakuragi?
Dialogue: 0,0:11:14.99,0:11:15.81,Default,,0,0,0,,Đi về.
Dialogue: 0,0:11:17.01,0:11:19.51,Default,,0,0,0,,Tôi sẽ không tham gia\Ncâu lạc bộ chán òm này!
Dialogue: 0,0:11:19.61,0:11:20.43,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:11:25.84,0:11:27.50,Default,,0,0,0,,Cái tên không có nghị lực này.
Dialogue: 0,0:11:28.27,0:11:29.32,Default,,0,0,0,,Sukuragi.
Dialogue: 0,0:11:42.07,0:11:43.86,Default,,0,0,0,,Đáng ghét...
Dialogue: 0,0:12:08.33,0:12:10.37,Default,,0,0,0,,[Danny's - Phục vụ 24/24]
Dialogue: 0,0:12:08.58,0:12:10.72,Default,,0,0,0,,Hanamichi, cuối cùng mày vẫn không tiếp tục.
Dialogue: 0,0:12:10.81,0:12:12.75,Default,,0,0,0,,Tao tưởng vừa bắt đầu sẽ từ bỏ ngay chứ.
Dialogue: 0,0:12:12.99,0:12:14.77,Default,,0,0,0,,Không đúng, không đúng,\Nnó cũng cầm cự được một tuần.
Dialogue: 0,0:12:14.87,0:12:16.47,Default,,0,0,0,,Đối với Hanamichi, như vậy đã rất giỏi rồi.
Dialogue: 0,0:12:16.50,0:12:17.66,Default,,0,0,0,,Đúng, là kỳ tích.
Dialogue: 0,0:12:20.17,0:12:22.76,Default,,0,0,0,,Suy cho cùng làm một vận động viên\Nkhông đơn giản như thế.
Dialogue: 0,0:12:23.06,0:12:23.85,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:12:23.96,0:12:26.70,Default,,0,0,0,,Nó cũng chỉ vì\Ncó ý với Haruko mới gia nhập thôi.
Dialogue: 0,0:12:28.63,0:12:30.96,Default,,0,0,0,,Hanamichi, mày không ăn sao?
Dialogue: 0,0:12:38.66,0:12:43.94,Default,,0,0,0,,Cái tên không có nghị lực này.
Dialogue: 0,0:12:48.98,0:12:49.79,Default,,0,0,0,,Đi về.
Dialogue: 0,0:12:50.91,0:12:52.95,Default,,0,0,0,,Tôi sẽ không tham gia\Ncâu lạc bộ chán òm này nữa!
Dialogue: 0,0:12:53.10,0:12:54.16,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:13:05.65,0:13:09.52,Default,,0,0,0,,Haruko, dáng vẻ buồn bã của cậu ấy...
Dialogue: 0,0:13:18.69,0:13:19.91,Default,,0,0,0,,Ohkusu, mày sao thế?
Dialogue: 0,0:13:24.61,0:13:25.71,Default,,0,0,0,,Tên khốn đó.
Dialogue: 0,0:13:25.79,0:13:29.12,Default,,0,0,0,,Đừng quan tâm tên ngu đó, bọn nó cũng đi rồi.
Dialogue: 0,0:13:35.55,0:13:36.98,Default,,0,0,0,,Cảm ơn đã đến.
Dialogue: 0,0:13:39.27,0:13:41.18,Default,,0,0,0,,Đồ ngu, đi thôi, đi thôi.
Dialogue: 0,0:13:46.68,0:13:48.34,Default,,0,0,0,,Mấy tên đó sao thế?
Dialogue: 0,0:14:00.25,0:14:01.07,Default,,0,0,0,,Chào.
Dialogue: 0,0:14:11.00,0:14:11.95,Default,,0,0,0,,Các cậu đang làm gì thế?
Dialogue: 0,0:14:12.50,0:14:13.72,Default,,0,0,0,,Đi tập luyện, đi tập luyện.
Dialogue: 0,0:14:14.02,0:14:14.86,Default,,0,0,0,,Ba cậu.
Dialogue: 0,0:14:14.95,0:14:15.81,Default,,0,0,0,,Vâng!
Dialogue: 0,0:14:16.02,0:14:16.97,Default,,0,0,0,,Anh ơi,
Dialogue: 0,0:14:18.12,0:14:20.51,Default,,0,0,0,,giờ em đi tìm Sakuragi.
Dialogue: 0,0:14:20.73,0:14:24.46,Default,,0,0,0,,Em nghĩ, chắc chắn lúc đó cậu ấy\Nchỉ nhất thời bồng bột mà thôi.
Dialogue: 0,0:14:24.63,0:14:27.14,Default,,0,0,0,,Để cậu ta đi đi, Haruko,\Ntên đó là loại người vậy đó.
Dialogue: 0,0:14:28.00,0:14:31.11,Default,,0,0,0,,Vì không thể chịu đựng sự huấn luyện\Nnghiêm khắc lúc đầu mà quay đầu trốn đi.
Dialogue: 0,0:14:31.54,0:14:33.50,Default,,0,0,0,,Đến giờ có bao nhiêu người\Ncũng từ bỏ vì như thế.
Dialogue: 0,0:14:33.74,0:14:35.30,Default,,0,0,0,,Em cũng biết mà.
Dialogue: 0,0:14:36.23,0:14:38.63,Default,,0,0,0,,Dù sao Sakuragi cũng giống những tên đó.
Dialogue: 0,0:14:39.08,0:14:39.90,Default,,0,0,0,,[Akagi.]
Dialogue: 0,0:14:41.55,0:14:42.44,Default,,0,0,0,,Không phải như vậy.
Dialogue: 0,0:14:42.96,0:14:44.55,Default,,0,0,0,,Sakuragi không phải loại người này.
Dialogue: 0,0:14:44.74,0:14:46.60,Default,,0,0,0,,Em đi tìm cậu ấy.
Dialogue: 0,0:14:47.32,0:14:48.02,Default,,0,0,0,,Haruko!
Dialogue: 0,0:14:53.49,0:14:56.99,Default,,0,0,0,,Các cậu còn ngơ ra đó làm gì? Mau đi tập luyện.
Dialogue: 0,0:15:04.21,0:15:06.47,Default,,0,0,0,,Mày muốn làm gì
Dialogue: 0,0:15:06.94,0:15:09.47,Default,,0,0,0,,mà lôi tao đến nơi này hả?
Dialogue: 0,0:15:10.62,0:15:11.62,Default,,0,0,0,,Thằng cao kều.
Dialogue: 0,0:15:11.91,0:15:12.76,Default,,0,0,0,,Mày khách sáo chút đi.
Dialogue: 0,0:15:15.88,0:15:18.40,Default,,0,0,0,,Cái tên không có nghị lực này.
Dialogue: 0,0:15:26.58,0:15:30.77,Default,,0,0,0,,Tên đầu to bên đó trông rất khiêm nhường nhỉ.
Dialogue: 0,0:15:31.04,0:15:34.40,Default,,0,0,0,,Có phải vì nó quá thu hút sự chú ý\Nnên dễ táo bón không?
Dialogue: 0,0:15:36.89,0:15:39.32,Default,,0,0,0,,Ngầu lắm, làm một quả đầu màu đỏ.
Dialogue: 0,0:15:39.40,0:15:41.45,Default,,0,0,0,,Thẩm mỹ cao quá, tao không bắt chước được.
Dialogue: 0,0:15:41.80,0:15:43.75,Default,,0,0,0,,Đương nhiên mày không\Nbắt chước đầu của nó được rồi.
Dialogue: 0,0:15:43.76,0:15:47.41,Default,,0,0,0,,Hahahaha...
Dialogue: 0,0:15:47.45,0:15:49.55,Default,,0,0,0,,Chúng mày nên biết chừng mực.
Dialogue: 0,0:15:57.75,0:16:02.04,Default,,0,0,0,,Đáng ghét, mày bớt đứng đây làm chướng mắt đi,\Nđúng là xấu xí.
Dialogue: 0,0:16:02.57,0:16:05.10,Default,,0,0,0,,Mày là gà à? Mày bắt chước vài tiếng\Ngà kêu cho tao nghe thử.
Dialogue: 0,0:16:05.33,0:16:06.64,Default,,0,0,0,,Đẻ vài quả trứng gà ra xem nào.
Dialogue: 0,0:16:07.06,0:16:12.57,Default,,0,0,0,,Hahahaha...
Dialogue: 0,0:16:13.35,0:16:15.20,Default,,0,0,0,,Tao muốn loại nóng.
Dialogue: 0,0:16:24.60,0:16:25.59,Default,,0,0,0,,Kenji.
Dialogue: 0,0:16:35.01,0:16:37.00,Default,,0,0,0,,Ken... Kenji!
Dialogue: 0,0:16:56.15,0:16:58.71,Default,,0,0,0,,Sakuragi, cậu biết úp rổ là gì không?
Dialogue: 0,0:17:00.87,0:17:03.53,Default,,0,0,0,,Úp rổ biểu tượng của bóng rổ.
Dialogue: 0,0:17:05.22,0:17:09.47,Default,,0,0,0,,Là một cách đánh kích thích nhất\Ncũng dễ khiến người xem nghiện nhất.
Dialogue: 0,0:17:09.59,0:17:12.77,Default,,0,0,0,,Nhất là rung đến nỗi khiến người ta lo lắng\Nbảng bóng rổ có bị nứt không.
Dialogue: 0,0:17:12.85,0:17:14.26,Default,,0,0,0,,Quả bóng chấn động mạnh như vậy
Dialogue: 0,0:17:14.34,0:17:16.13,Default,,0,0,0,,gọi là úp rổ.
Dialogue: 0,0:17:16.72,0:17:18.31,Default,,0,0,0,,Gọi là úp rổ.
Dialogue: 0,0:17:22.48,0:17:23.38,Default,,0,0,0,,Yohei.
Dialogue: 0,0:17:24.75,0:17:28.19,Default,,0,0,0,,Đột nhiên tao nhớ ra còn chuyện khác,\Ntao có thể đi trước không?
Dialogue: 0,0:17:33.84,0:17:35.93,Default,,0,0,0,,Đến thế võ chuẩn bị còn chưa làm được.
Dialogue: 0,0:17:37.12,0:17:41.78,Default,,0,0,0,,Thằng này còn muốn chạy,\Nmày dám khiến Kenji thành ra như vậy.
Dialogue: 0,0:17:41.86,0:17:42.83,Default,,0,0,0,,Quay lại.
Dialogue: 0,0:17:43.57,0:17:46.56,Default,,0,0,0,,Cái này là do bản thân tên này không tốt lành.
Dialogue: 0,0:17:46.64,0:17:47.33,Default,,0,0,0,,Mày nói gì?
Dialogue: 0,0:17:47.33,0:17:50.30,Default,,0,0,0,,Nó muốn vượt đèn đỏ là do nó không đúng.
Dialogue: 0,0:17:50.32,0:17:51.93,Default,,0,0,0,,Lúc không nên vượt nó cứ đòi vượt.
Dialogue: 0,0:17:51.94,0:17:52.92,Default,,0,0,0,,Đương nhiên sẽ xảy ra chuyện.
Dialogue: 0,0:17:53.00,0:17:54.95,Default,,0,0,0,,Chuyện này\Nmấy đứa trong nhà trẻ cũng đều biết.
Dialogue: 0,0:18:03.31,0:18:04.89,Default,,0,0,0,,Đèn đỏ có nghĩa là dừng.
Dialogue: 0,0:18:10.30,0:18:12.58,Default,,0,0,0,,Đáng ghét, không ngờ nó lại\Nxem thường người khác.
Dialogue: 0,0:18:12.80,0:18:14.75,Default,,0,0,0,,Bọn mày là học sinh lớp 10 Shohoku,\Nđúng không?
Dialogue: 0,0:18:14.93,0:18:17.36,Default,,0,0,0,,Đừng có đắc ý quá.
Dialogue: 0,0:18:17.45,0:18:19.52,Default,,0,0,0,,Bọn mày biết bọn tao là ai không?
Dialogue: 0,0:18:19.85,0:18:21.58,Default,,0,0,0,,Bọn tao là học sinh lớp 12 trường đời đây.
Dialogue: 0,0:18:21.60,0:18:26.17,Default,,0,0,0,,Bọn mày đến cãi nhau à, lắm mồm thế.
Dialogue: 0,0:18:31.41,0:18:32.69,Default,,0,0,0,,Đến đây!
Dialogue: 0,0:18:41.04,0:18:42.51,Default,,0,0,0,,Chuyền qua đây.
Dialogue: 0,0:18:43.37,0:18:45.08,Default,,0,0,0,,- Bên này.\N- Tốt.
Dialogue: 0,0:18:54.44,0:18:55.23,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:18:55.51,0:18:58.38,Default,,0,0,0,,Cái gì? Sakuragi Hanamichi quay về rồi à?
Dialogue: 0,0:19:00.76,0:19:06.07,Default,,0,0,0,,Tốt quá, tốt quá, Sakuragi.
Dialogue: 0,0:19:07.75,0:19:09.80,Default,,0,0,0,,Tốt quá, thật là tốt quá.
Dialogue: 0,0:19:10.07,0:19:13.81,Default,,0,0,0,,Gì thế?\NCậu ấy nói sao? Cậu ấy hối lỗi rồi sao?
Dialogue: 0,0:19:13.90,0:19:15.33,Default,,0,0,0,,Tốt quá, tốt quá.
Dialogue: 0,0:19:15.42,0:19:17.42,Default,,0,0,0,,Hahaha...
Dialogue: 0,0:19:17.77,0:19:23.46,Default,,0,0,0,,Em thấy bây giờ là lúc để cậu ấy học\Nthứ khác ngoài dẫn bóng rồi, đàn anh Akagi.
Dialogue: 0,0:19:23.68,0:19:25.45,Default,,0,0,0,,Ý hay đấy.
Dialogue: 0,0:19:32.79,0:19:34.05,Default,,0,0,0,,Vậy... cứ làm vậy đi.
Dialogue: 0,0:19:35.06,0:19:36.39,Default,,0,0,0,,Tốt quá, tốt quá.
Dialogue: 0,0:19:37.18,0:19:38.98,Default,,0,0,0,,Vậy em có thể bắt đầu úp rổ rồi sao?
Dialogue: 0,0:19:41.29,0:19:42.52,Default,,0,0,0,,Bắt đầu từ chuyền bóng cơ bản.
Dialogue: 0,0:19:44.79,0:19:48.40,Default,,0,0,0,,Tốt quá,\NSakuragi có thể bắt đầu bước tiếp theo rồi.
Dialogue: 0,0:19:48.61,0:19:50.98,Default,,0,0,0,,Phải, tốt lắm Sakuragi.
Dialogue: 0,0:19:51.45,0:19:52.98,Default,,0,0,0,,Tốt quá, tốt quá!
Dialogue: 0,0:19:56.29,0:19:57.13,Default,,0,0,0,,Haruko.
Dialogue: 0,0:20:02.71,0:20:03.89,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:20:05.35,0:20:06.20,Default,,0,0,0,,Haruko.
Dialogue: 0,0:20:08.19,0:20:09.21,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:20:10.13,0:20:11.11,Default,,0,0,0,,Haruko.
Dialogue: 0,0:20:12.05,0:20:14.01,Default,,0,0,0,,Được rồi, đến đây!
Dialogue: 0,0:20:18.92,0:20:20.41,Default,,0,0,0,,Bắt đầu tập chuyền bóng, chuyền bóng.
Dialogue: 0,0:20:20.63,0:20:21.52,Default,,0,0,0,,Mượn bóng chút.
Dialogue: 0,0:20:21.60,0:20:23.30,Default,,0,0,0,,Lên đây.
Dialogue: 0,0:20:29.03,0:20:31.42,Default,,0,0,0,,Cuối cùng vẫn quay lại.
Dialogue: 0,0:20:32.25,0:20:33.78,Default,,0,0,0,,Đúng như tao đoán.
Dialogue: 0,0:20:38.43,0:20:39.54,Default,,0,0,0,,Tốt quá!
Dialogue: 0,0:20:40.28,0:20:42.02,Default,,0,0,0,,Mau chuyền bóng.
Dialogue: 0,0:20:42.76,0:20:43.91,Default,,0,0,0,,Chuyền bóng.
Dialogue: 0,0:20:44.40,0:20:46.40,Default,,0,0,0,,Chuyền bóng.
Dialogue: 0,0:20:50.60,0:20:52.37,Default,,0,0,0,,Chuyền bóng.
Dialogue: 0,0:20:53.36,0:20:56.22,Default,,0,0,0,,[Cuối cùng Sakuragi Hanamichi\Nvẫn quay lại cậu lạc bộ bóng rổ Shohoku.]
Dialogue: 0,0:20:58.01,0:20:59.41,Default,,0,0,0,,[Vừa vì báo đáp tình bạn của nhóm Yohei,]
Dialogue: 0,0:20:59.60,0:21:01.59,Default,,0,0,0,,[song song với sự ủng hộ của Akagi Haruko,]
Dialogue: 0,0:21:02.04,0:21:05.07,Default,,0,0,0,,[sự trở lại này cũng khiến cậu ấy\Nđốt cháy lại ý chí chiến đấu mới.]
Dialogue: 0,0:21:06.65,0:21:10.41,Default,,0,0,0,,♫ Đôi mắt luôn hướng về phía cậu ♫
Dialogue: 0,0:21:10.55,0:21:14.76,Default,,0,0,0,,♫ Từ lúc vừa mới gặp cho đến hiện tại ♫
Dialogue: 0,0:21:14.79,0:21:18.25,Default,,0,0,0,,♫ Chỉ cần có cậu ở bên ♫
Dialogue: 0,0:21:18.28,0:21:22.19,Default,,0,0,0,,♫ Những thứ khác đều không cần a ♫
Dialogue: 0,0:21:22.36,0:21:26.20,Default,,0,0,0,,♫ Căng thẳng tột độ vì ước mơ ♫
Dialogue: 0,0:21:31.63,0:21:36.41,Default,,0,0,0,,♫ Nhìn thấy vẻ mặt cậu vui như thế ♫
Dialogue: 0,0:21:36.49,0:21:39.82,Default,,0,0,0,,♫ Không có ngụy trang gì cả ♫
Dialogue: 0,0:21:39.91,0:21:46.29,Default,,0,0,0,,♫ Luôn mang theo máy nhắn tin\Nđể cậu có thể tìm mình bất cứ lúc nào ♫
Dialogue: 0,0:21:46.37,0:21:51.92,Default,,0,0,0,,♫ Am hiểu hơn về xe ♫
Dialogue: 0,0:21:52.13,0:21:55.46,Default,,0,0,0,,♫ Cũng đang cố gắng\Nhọc cách tự chăm sóc mình ♫
Dialogue: 0,0:21:55.88,0:21:59.87,Default,,0,0,0,,♫ Tuy là có hơi bối rối ♫
Dialogue: 0,0:21:59.96,0:22:05.31,Default,,0,0,0,,♫ Nhưng vẫn quyết định\Ntheo người này cả đời ♫
Dialogue: 0,0:22:08.43,0:22:12.31,Default,,0,0,0,,♫ Trong mắt chỉ có mỗi mình cậu ♫
Dialogue: 0,0:22:12.39,0:22:16.39,Default,,0,0,0,,♫ Một mình chờ đợi\Ntrong căn phòng của đôi ta ♫
Dialogue: 0,0:22:16.47,0:22:24.07,Default,,0,0,0,,♫ Nụ cười của cậu\Ngiống như là cái khóa màu hoa hồng ♫
Dialogue: 0,0:22:24.68,0:22:33.02,Default,,0,0,0,,♫ Tiến về trước, cô gái không có ước mơ ♫
Dialogue: 0,0:22:36.32,0:22:38.76,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:39.68,0:22:40.74,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:22:40.89,0:22:43.51,Default,,0,0,0,,Đấu giao hữu giữa\Nhọc sinh khối trên và học sinh khối lớp 10.
Dialogue: 0,0:22:43.65,0:22:47.16,Default,,0,0,0,,Rukawa - Bại tướng dưới tay mình.
Dialogue: 0,0:22:47.24,0:22:49.89,Default,,0,0,0,,Tinh Tinh Bự, lần này phải chơi anh rồi.
Dialogue: 0,0:22:49.97,0:22:51.36,Default,,0,0,0,,Đúng không, Haruko?
