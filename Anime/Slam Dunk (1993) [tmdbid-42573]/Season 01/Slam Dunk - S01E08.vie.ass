Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:04.37,0:00:10.79,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:28.99,0:00:35.53,Default,,0,0,0,,♫ Ánh mặt trời chói rọi phía sau lưng,\Ntôi bước trên con đường này ♫
Dialogue: 0,0:00:35.72,0:00:41.86,Default,,0,0,0,,♫ Cũng như thường lệ, lại bị vỗ vai ♫
Dialogue: 0,0:00:42.46,0:00:48.96,Default,,0,0,0,,♫ Cậu là nữ thần của tôi, không có lý do gì cả ♫
Dialogue: 0,0:00:49.02,0:00:54.46,Default,,0,0,0,,♫ Nhưng lại chưa từng khoác lấy tay tôi ♫
Dialogue: 0,0:00:54.54,0:01:01.10,Default,,0,0,0,,♫ Không biết từ lúc nào,\Nánh mắt đã không thể rời đi ♫
Dialogue: 0,0:01:01.24,0:01:07.82,Default,,0,0,0,,♫ Không buông ra, không do dự,\Nđiên cuồng vì cậu ♫
Dialogue: 0,0:01:07.84,0:01:14.76,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:01:14.86,0:01:21.32,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:01:21.34,0:01:28.56,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm tiến lên một bước ♫
Dialogue: 0,0:01:28.72,0:01:35.94,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:01:46.60,0:01:49.29,Default,,0,0,0,,[Sakuragi Hanamichi cảm thấy hết sức nôn nóng\Nkhi thấy Rukawa chiếm được sự nổi bật]
Dialogue: 0,0:01:49.33,0:01:51.60,Default,,0,0,0,,[trong trận đấu giữa lớp 10 và những lớp trên.]
Dialogue: 0,0:01:52.01,0:01:52.82,Default,,0,0,0,,[Chính vào lúc này,]
Dialogue: 0,0:01:52.98,0:01:55.64,Default,,0,0,0,,[cuối cùng thì\NSakuragi cũng có được cơ hội ra sân]
Dialogue: 0,0:02:03.38,0:02:06.72,Default,,0,0,0,,[khi bị lối đánh mạnh mẽ của Rukawa\Nthu hút ánh mắt]
Dialogue: 0,0:02:07.32,0:02:09.77,Default,,0,0,0,,[nhưng lại xem đầu của Akagi là rổ,]
Dialogue: 0,0:02:09.80,0:02:12.92,Default,,0,0,0,,[biểu diễn một cú úp rổ có giá trị kỷ niệm.]
Dialogue: 0,0:02:21.33,0:02:28.95,Default,,0,0,0,,[Nguy cơ của Hanamichi!\NCái bẫy của chàng trai Judo]
Dialogue: 0,0:02:23.49,0:02:27.20,Default,,0,0,0,,[Nguy cơ của Hanamichi!\NCái bẫy của chàng trai Judo!]
Dialogue: 0,0:02:46.90,0:02:48.54,Default,,0,0,0,,Sao giờ mà cái thằng này chưa đến nữa,
Dialogue: 0,0:02:48.79,0:02:50.48,Default,,0,0,0,,sắp bắt đầu tiết thứ ba rồi.
Dialogue: 0,0:02:51.36,0:02:53.76,Default,,0,0,0,,Có khi thằng đó đang ở trong trường
Dialogue: 0,0:02:53.90,0:02:55.53,Default,,0,0,0,,nhưng chúng ta không để ý thôi.
Dialogue: 0,0:02:56.22,0:03:00.57,Default,,0,0,0,,Sao có thể không để ý được\Nthằng khốn tóc đỏ đó chứ.
Dialogue: 0,0:03:08.73,0:03:09.93,Default,,0,0,0,,[Một cái đầu màu đỏ.]
Dialogue: 0,0:03:15.37,0:03:16.52,Default,,0,0,0,,Ngày mưa đáng ghét thật đấy.
Dialogue: 0,0:03:17.99,0:03:19.22,Default,,0,0,0,,Bây giờ mà vẫn thấy đau cổ,
Dialogue: 0,0:03:19.51,0:03:21.48,Default,,0,0,0,,tên Tinh Tinh Bự đó ra tay ác thật đấy.
Dialogue: 0,0:03:24.85,0:03:27.19,Default,,0,0,0,,Mày là Sakuragi Hanamichi lớp 10 nhỉ?
Dialogue: 0,0:03:35.92,0:03:37.57,Default,,0,0,0,,[Vậy bây giờ, đoạn tiếng Anh này,]
Dialogue: 0,0:03:37.81,0:03:39.78,Default,,0,0,0,,- [Akagi, em giải thích đi.]\N- [Vâng.]
Dialogue: 0,0:03:40.56,0:03:43.29,Default,,0,0,0,,Cậu ấy nói buổi sáng
Dialogue: 0,0:03:43.32,0:03:45.72,Default,,0,0,0,,là khởi đầu của một ngày tràn đầy hi vọng.
Dialogue: 0,0:03:46.56,0:03:49.53,Default,,0,0,0,,Mọi người nhìn lên ánh nắng\Nxuyên thấu và chói mắt ấy
Dialogue: 0,0:03:49.85,0:03:51.98,Default,,0,0,0,,và cầu nguyện,
Dialogue: 0,0:03:52.21,0:03:54.70,Default,,0,0,0,,cầu xin có được hạnh phúc rực rỡ.
Dialogue: 0,0:03:55.36,0:03:56.85,Default,,0,0,0,,Rất hoàn hảo, cảm ơn em.
Dialogue: 0,0:03:59.11,0:04:00.84,Default,,0,0,0,,Không hổ là Akagi,
Dialogue: 0,0:04:00.94,0:04:02.87,Default,,0,0,0,,câu này khá khó đấy.
Dialogue: 0,0:04:03.35,0:04:04.16,Default,,0,0,0,,Vậy à?
Dialogue: 0,0:04:05.12,0:04:07.21,Default,,0,0,0,,[Phục cậu ấy thật đấy, mình không thể so được.]
Dialogue: 0,0:04:08.30,0:04:10.49,Default,,0,0,0,,Sao rồi Akagi? Tình hình của đội bóng rổ ấy.
Dialogue: 0,0:04:10.81,0:04:12.87,Default,,0,0,0,,Người làm đội trưởng như cậu\Ncó cảm giác quen việc nhẹ nhàng đấy.
Dialogue: 0,0:04:13.27,0:04:14.71,Default,,0,0,0,,Không, vẫn chưa được.
Dialogue: 0,0:04:15.50,0:04:17.43,Default,,0,0,0,,Rõ ràng biết là\Nnên nghiêm khắc với bọn nó hơn
Dialogue: 0,0:04:17.66,0:04:19.52,Default,,0,0,0,,nhưng không biết tại sao lại mềm lòng.
Dialogue: 0,0:04:20.04,0:04:21.33,Default,,0,0,0,,Như vậy vẫn không được.
Dialogue: 0,0:04:21.73,0:04:24.32,Default,,0,0,0,,[Đã đủ nghiêm khắc rồi,\Ncòn định nghiêm khắc hơn nữa á?]
Dialogue: 0,0:04:25.20,0:04:27.32,Default,,0,0,0,,[Nhưng chẳng phải là đội bóng rổ năm nay\Nđẹp trai lắm à?]
Dialogue: 0,0:04:27.59,0:04:30.22,Default,,0,0,0,,[Đúng vậy, cả trường đang khen cả đấy, Akagi.]
Dialogue: 0,0:04:30.42,0:04:32.72,Default,,0,0,0,,[Hình như lớp 10 cũng có\Nngười mới khá ổn vào, không phải à?
Dialogue: 0,0:04:32.94,0:04:35.96,Default,,0,0,0,,Ai biết được, toàn là mấy học sinh có vấn đề.
Dialogue: 0,0:04:43.85,0:04:45.51,Default,,0,0,0,,[Rukawa vẫn đang ngủ à?]
Dialogue: 0,0:04:45.53,0:04:46.56,Default,,0,0,0,,[Mau gọi cậu ấy dậy đi.]
Dialogue: 0,0:04:46.58,0:04:50.59,Default,,0,0,0,,[Nhìn mắt của thầy Koike kìa,\Nchắc chắn là thầy ấy chú ý rồi, thôi xong.]
Dialogue: 0,0:04:51.59,0:04:52.56,Default,,0,0,0,,Rukawa.
Dialogue: 0,0:04:53.15,0:04:54.21,Default,,0,0,0,,Rukawa, mau dậy đi.
Dialogue: 0,0:05:19.14,0:05:22.32,Default,,0,0,0,,Đáng ghét, Rukawa!
Dialogue: 0,0:05:22.34,0:05:25.51,Default,,0,0,0,,Tiết nào em cũng ngủ,
Dialogue: 0,0:05:25.79,0:05:27.97,Default,,0,0,0,,chẳng lẽ tiết học của tôi\Nthật sự chán như vậy à?
Dialogue: 0,0:05:28.00,0:05:29.25,Default,,0,0,0,,Thật sự chán như vậy à?
Dialogue: 0,0:05:29.28,0:05:32.58,Default,,0,0,0,,Đáng ghét, mau dậy đi!\NLần nào cũng ngủ, tức chết tôi mất!
Dialogue: 0,0:05:33.66,0:05:35.96,Default,,0,0,0,,Thầy à, cậu ấy học tiết của người khác\Nthì cũng như vậy.
Dialogue: 0,0:05:48.61,0:05:52.13,Default,,0,0,0,,Không cần biết là ai, chỉ cần ảnh hưởng đến\Ngiấc ngủ của tôi thì tôi sẽ không tha thứ.
Dialogue: 0,0:05:52.66,0:05:53.26,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:05:53.44,0:05:57.00,Default,,0,0,0,,[Lớp 10-10]
Dialogue: 0,0:06:06.51,0:06:07.13,Default,,0,0,0,,[Sakuragi.]
Dialogue: 0,0:06:08.37,0:06:09.20,Default,,0,0,0,,[Sakuragi.]
Dialogue: 0,0:06:10.82,0:06:13.69,Default,,0,0,0,,[Mito này, Sakuragi hôm nay sao vậy? Trốn học à?]
Dialogue: 0,0:06:14.77,0:06:16.14,Default,,0,0,0,,Em không biết.
Dialogue: 0,0:06:17.13,0:06:20.05,Default,,0,0,0,,Lại trốn học à?\NĐúng là bị tôi đoán đúng hết rồi.
Dialogue: 0,0:06:20.56,0:06:22.50,Default,,0,0,0,,Dù tôi có nói bao nhiêu lần thì em ấy\Ncũng không chịu nhuộm tóc thành màu đen.
Dialogue: 0,0:06:22.94,0:06:25.32,Default,,0,0,0,,Cái người như vậy thì chỉ cần ba tháng\Nlà sẽ không đến trường nữa,
Dialogue: 0,0:06:25.68,0:06:26.53,Default,,0,0,0,,chẳng có gì khác nhau.
Dialogue: 0,0:06:27.71,0:06:29.92,Default,,0,0,0,,Mito, em thật sự không biết à?
Dialogue: 0,0:06:36.84,0:06:38.87,Default,,0,0,0,,Học sinh như thế này đúng là đáng ghét.
Dialogue: 0,0:06:41.07,0:06:43.50,Default,,0,0,0,,[Cuối cùng thì Sakuragi đi làm gì vậy?]
Dialogue: 0,0:06:51.46,0:06:52.72,Default,,0,0,0,,Mày là Sakuragi Hanamichi nhỉ?
Dialogue: 0,0:06:53.54,0:06:56.30,Default,,0,0,0,,Thì ra là vậy,\Nhình thể tập luyện cũng được đấy.
Dialogue: 0,0:06:57.27,0:07:00.13,Default,,0,0,0,,Rốt cuộc thì bọn mày là ai\Nmà dám giở trò mai phục như vậy?
Dialogue: 0,0:07:00.64,0:07:02.93,Default,,0,0,0,,Như vậy mà làm tao đến muộn thì sẽ thảm à?
Dialogue: 0,0:07:03.33,0:07:06.38,Default,,0,0,0,,Mày nói cái gì? Mày vốn đã đến trễ rồi,
Dialogue: 0,0:07:07.33,0:07:08.66,Default,,0,0,0,,đừng có đẩy hết lỗi cho người khác.
Dialogue: 0,0:07:09.26,0:07:11.66,Default,,0,0,0,,Nhìn thế này thì tao muốn xử lý mày quá đi.
Dialogue: 0,0:07:12.08,0:07:14.88,Default,,0,0,0,,Thằng này đúng là một tên siêu ngốc\Ngiống như lời đồn.
Dialogue: 0,0:07:15.41,0:07:17.75,Default,,0,0,0,,Mày nói gì vậy? Cuối cùng thì bọn mày là ai?
Dialogue: 0,0:07:17.93,0:07:20.62,Default,,0,0,0,,Tao không quen biết bọn mày,\Ncòn chưa từng gặp mặt nữa là.
Dialogue: 0,0:07:21.20,0:07:23.69,Default,,0,0,0,,Tao không có thù gì với bọn mày hết.
Dialogue: 0,0:07:23.71,0:07:25.24,Default,,0,0,0,,Là lệnh của bên trên,
Dialogue: 0,0:07:25.59,0:07:26.78,Default,,0,0,0,,mày đừng trách bọn tao.
Dialogue: 0,0:07:42.56,0:07:45.19,Default,,0,0,0,,Nghe nói lần sau sẽ đấu tập với Ryonan.
Dialogue: 0,0:07:45.67,0:07:50.08,Default,,0,0,0,,Đúng vậy. Chúng ta thua 100 điểm\Ntrong trận đấu cấp tỉnh năm ngoái.
Dialogue: 0,0:07:50.94,0:07:52.73,Default,,0,0,0,,[Nhưng con át chủ bài của Ryonan, Uozumi]
Dialogue: 0,0:07:53.13,0:07:55.03,Default,,0,0,0,,[lại bị Akagi chế ngự hoàn toàn.]
Dialogue: 0,0:07:55.88,0:07:57.52,Default,,0,0,0,,[Lúc đó cậu ấy đúng là rất tuyệt.]
Dialogue: 0,0:07:59.11,0:08:01.67,Default,,0,0,0,,Chắc là màn biểu hiện năm nay cũng được nhỉ.
Dialogue: 0,0:08:02.29,0:08:03.62,Default,,0,0,0,,Mục tiêu của các cậu là gì thế?
Dialogue: 0,0:08:03.90,0:08:04.59,Default,,0,0,0,,Top tám à?
Dialogue: 0,0:08:04.99,0:08:06.42,Default,,0,0,0,,Hay là tham gia cuộc thi\Ngiữa các trường cấp ba?
Dialogue: 0,0:08:07.05,0:08:08.14,Default,,0,0,0,,Là xưng bá toàn quốc.
Dialogue: 0,0:08:08.72,0:08:10.34,Default,,0,0,0,,Giỏi quá.
Dialogue: 0,0:08:11.28,0:08:14.62,Default,,0,0,0,,Xưng bá toàn quốc đã thành câu cửa miệng\Ntừ thời cấp hai rồi.
Dialogue: 0,0:08:15.07,0:08:16.40,Default,,0,0,0,,Là từ cấp một.
Dialogue: 0,0:08:16.60,0:08:17.83,Default,,0,0,0,,Là xưng bá toàn quốc à?
Dialogue: 0,0:08:20.46,0:08:24.28,Default,,0,0,0,,Đừng nói nữa. Mỗi lần nói đến vấn đề này
Dialogue: 0,0:08:24.31,0:08:25.54,Default,,0,0,0,,thì tên đó sẽ xuất hiện. Tên đó...
Dialogue: 0,0:08:25.94,0:08:26.63,Default,,0,0,0,,Tên đó?
Dialogue: 0,0:08:30.77,0:08:32.29,Default,,0,0,0,,Xưng bá toàn quốc
Dialogue: 0,0:08:33.62,0:08:36.89,Default,,0,0,0,,chỉ sợ là bọn tao lấy được trước đấy, Akagi.
Dialogue: 0,0:08:37.05,0:08:38.01,Default,,0,0,0,,Đội Judo của bọn tao sẽ lấy được trước.
Dialogue: 0,0:08:39.61,0:08:41.10,Default,,0,0,0,,Là Aota, đúng là mày đến.
Dialogue: 0,0:08:41.17,0:08:41.97,Default,,0,0,0,,Aota.
Dialogue: 0,0:08:42.08,0:08:43.04,Default,,0,0,0,,Aota.
Dialogue: 0,0:08:43.18,0:08:44.42,Default,,0,0,0,,Aota.
Dialogue: 0,0:08:44.63,0:08:46.86,Default,,0,0,0,,Rốt cuộc thì mày có tai kiểu gì vậy?
Dialogue: 0,0:08:47.50,0:08:50.81,Default,,0,0,0,,Xin mày đấy, đừng lần nào nhắc đến chuyện này\Ncũng xuất hiện từ kế bên được không hả?
Dialogue: 0,0:08:50.83,0:08:51.72,Default,,0,0,0,,Aota.
Dialogue: 0,0:08:52.39,0:08:58.47,Default,,0,0,0,,[Người dẫn đầu câu lạc bộ Judo\Ntrường cấp ba Shohoku]
Dialogue: 0,0:08:52.39,0:08:58.47,Default,,0,0,0,,[Aota Tatshuhiko]
Dialogue: 0,0:08:53.10,0:08:54.63,Default,,0,0,0,,Người như mày mà lại
Dialogue: 0,0:08:54.65,0:08:56.62,Default,,0,0,0,,bị loại thể thao phù phiếm như bóng rổ\Nmê hoặc đến thần hồn điên đảo,
Dialogue: 0,0:08:57.09,0:08:58.61,Default,,0,0,0,,tao thấy thương thay cho mày đấy, Akagi.
Dialogue: 0,0:08:59.29,0:09:01.55,Default,,0,0,0,,Tại sao mày lại nói\Nbóng rổ là một môn thể thao phù phiếm?
Dialogue: 0,0:08:59.70,0:09:05.09,Default,,0,0,0,,[Người dẫn đầu câu lạc bộ bóng rổ\Ntrường cấp ba Shohoku]
Dialogue: 0,0:08:59.70,0:09:05.09,Default,,0,0,0,,[Akagi Takenori]
Dialogue: 0,0:09:02.39,0:09:05.25,Default,,0,0,0,,Mày đừng có giả vờ là hiểu, được không hả?
Dialogue: 0,0:09:06.20,0:09:09.90,Default,,0,0,0,,Mấy năm nay đều nói những lời như vậy,\Nmày muốn nói bao nhiêu lần mới chịu hả Aota?
Dialogue: 0,0:09:10.69,0:09:14.55,Default,,0,0,0,,Tại sao mày có thể nói với tao\Nnhững lời như vậy hả, Akagi?
Dialogue: 0,0:09:15.07,0:09:18.13,Default,,0,0,0,,- Bầu không khí thi đấu ngày càng đậm.\N- Hai người họ đang làm gì vậy?
Dialogue: 0,0:09:18.37,0:09:21.42,Default,,0,0,0,,Bọn họ lúc nào cũng vậy,\Ncái gì cũng cạnh tranh với nhau.
Dialogue: 0,0:09:22.15,0:09:25.45,Default,,0,0,0,,Hai người họ là bạn thân từ thời cấp một,
Dialogue: 0,0:09:25.47,0:09:26.70,Default,,0,0,0,,cũng là đối thủ cạnh tranh.
Dialogue: 0,0:09:27.59,0:09:29.32,Default,,0,0,0,,Quan hệ phức tạp thật.
Dialogue: 0,0:09:29.96,0:09:33.37,Default,,0,0,0,,Em gái Akagi Haruko vẫn ổn chứ?
Dialogue: 0,0:09:34.31,0:09:35.07,Default,,0,0,0,,Không được chạm vào con bé.
Dialogue: 0,0:09:36.02,0:09:38.61,Default,,0,0,0,,Mà nghe nói từ thời cấp một\Nlà cậu ấy đã gặp tình yêu sét đánh với
Dialogue: 0,0:09:38.63,0:09:40.97,Default,,0,0,0,,em gái của Akagi Takenori - Akagi Haruko.
Dialogue: 0,0:09:41.17,0:09:42.88,Default,,0,0,0,,Quan hệ phức tạp thật đấy.
Dialogue: 0,0:09:43.34,0:09:46.46,Default,,0,0,0,,Thôi bỏ đi,\Nnói ra thì câu lạc bộ Judo của bọn tao
Dialogue: 0,0:09:46.49,0:09:48.75,Default,,0,0,0,,đang có kế hoạch tăng cường để nhắm đến\Nmục tiêu là cuộc thi giữa các trường.
Dialogue: 0,0:09:49.67,0:09:53.03,Default,,0,0,0,,Người giành được giải nhất\Nchỉ có bọn tao thôi, Akagi.
Dialogue: 0,0:09:53.51,0:09:56.24,Default,,0,0,0,,Aota, bọn tao cũng để ý đến năm nay lắm đấy.
Dialogue: 0,0:09:56.99,0:09:58.72,Default,,0,0,0,,Lớp 10 có vài đứa mới vào rất khá.
Dialogue: 0,0:09:59.69,0:10:00.39,Default,,0,0,0,,Bọn tao cũng vậy.
Dialogue: 0,0:10:01.87,0:10:04.96,Default,,0,0,0,,Có thể nói là có một anh tài\N"trăm năm mới có một người" đã vào.
Dialogue: 0,0:10:06.11,0:10:07.51,Default,,0,0,0,,Nói lố quá đấy.
Dialogue: 0,0:10:07.99,0:10:09.15,Default,,0,0,0,,Là đứa như thế nào vậy?
Dialogue: 0,0:10:10.64,0:10:13.44,Default,,0,0,0,,Sakuragi Hanamichi lớp 10-7.
Dialogue: 0,0:10:13.79,0:10:14.41,Default,,0,0,0,,Mày nói gì?
Dialogue: 0,0:10:15.89,0:10:18.44,Default,,0,0,0,,Từ từ đã, Aota, chuyện gì vậy?
Dialogue: 0,0:10:18.78,0:10:21.91,Default,,0,0,0,,Cái gì mà chuyện gì hả Kogure,\Nnhư tao mới nói đấy.
Dialogue: 0,0:10:22.47,0:10:26.46,Default,,0,0,0,,Nhóm tinh anh của bọn tao\Nđang đi khuyên cậu ta vào nhóm.
Dialogue: 0,0:10:26.98,0:10:29.81,Default,,0,0,0,,Mấy đứa đó nổi tiếng là thành phần bạo lực.
Dialogue: 0,0:10:30.00,0:10:30.69,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:10:34.07,0:10:36.20,Default,,0,0,0,,Aota, có lớp 11 đến tìm cậu kìa.
Dialogue: 0,0:10:37.18,0:10:38.47,Default,,0,0,0,,Hình như làm xong chuyện rồi.
Dialogue: 0,0:10:40.72,0:10:42.02,Default,,0,0,0,,Bọn em thất bại rồi.
Dialogue: 0,0:10:44.11,0:10:46.01,Default,,0,0,0,,Đến thành viên mạnh nhất của bọn tao\Nmà cũng không làm được,
Dialogue: 0,0:10:47.31,0:10:48.40,Default,,0,0,0,,tao càng ngày càng thích cậu ta đấy.
Dialogue: 0,0:10:48.65,0:10:51.44,Default,,0,0,0,,Akagi, tao chắc chắn sẽ cướp Sakuragi về.
Dialogue: 0,0:10:53.89,0:10:56.39,Default,,0,0,0,,Thật là, mới vận động một chút mà đã đói rồi.
Dialogue: 0,0:10:57.40,0:10:59.37,Default,,0,0,0,,Quý khách này, cậu không cần đi học à?
Dialogue: 0,0:10:59.69,0:11:01.56,Default,,0,0,0,,Không sao, không sao.
Dialogue: 0,0:11:01.99,0:11:04.71,Default,,0,0,0,,[Tiệm mì]
Dialogue: 0,0:11:02.36,0:11:04.26,Default,,0,0,0,,Ghi sổ giúp tôi nhé, cảm ơn.
Dialogue: 0,0:11:04.88,0:11:05.94,Default,,0,0,0,,Quý khách!
Dialogue: 0,0:11:41.56,0:11:43.62,Default,,0,0,0,,Sáng mắt quá đi, đúng là đang tỏa sáng mà.
Dialogue: 0,0:11:48.97,0:11:50.16,Default,,0,0,0,,[Haruko.]
Dialogue: 0,0:11:50.74,0:11:52.06,Default,,0,0,0,,[Đáng yêu quá.]
Dialogue: 0,0:11:55.80,0:11:57.89,Default,,0,0,0,,Đang giờ học mà mấy đứa đó làm gì vậy chứ.
Dialogue: 0,0:11:59.10,0:12:01.13,Default,,0,0,0,,Haruko cũng nhận rồi rồi à?
Dialogue: 0,0:12:01.31,0:12:02.57,Default,,0,0,0,,Mày vẫy tay xem nào.
Dialogue: 0,0:12:04.63,0:12:05.78,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:12:12.91,0:12:14.00,Default,,0,0,0,,Không được trả lời bọn nó!
Dialogue: 0,0:12:15.83,0:12:17.76,Default,,0,0,0,,Dám đối xử với Haruko tôi như vậy à!
Dialogue: 0,0:12:25.74,0:12:27.18,Default,,0,0,0,,Cậu là...
Dialogue: 0,0:12:27.69,0:12:28.71,Default,,0,0,0,,Anh là ai nữa vậy?
Dialogue: 0,0:12:29.11,0:12:31.70,Default,,0,0,0,,Sakuragi, trùng hợp thật đấy,
Dialogue: 0,0:12:33.44,0:12:34.87,Default,,0,0,0,,thật ra thì tôi đang đi tìm cậu đây.
Dialogue: 0,0:12:37.00,0:12:43.76,Default,,0,0,0,,[Quân đoàn giáo viên thể dục]
Dialogue: 0,0:12:38.59,0:12:41.85,Default,,0,0,0,,Mấy đứa lại dám nhìn trộm trong giờ học,\Nto gan thật đấy.
Dialogue: 0,0:12:41.88,0:12:44.44,Default,,0,0,0,,Đến báo cáo ở phòng giáo vụ thể dục cho tôi,\Nphải dạy dỗ mấy đứa cho đàng hoàng.
Dialogue: 0,0:12:44.46,0:12:47.16,Default,,0,0,0,,Thôi xong, Sakuragi bị bắt rồi kìa, chạy mau!
Dialogue: 0,0:12:48.00,0:12:50.30,Default,,0,0,0,,Mấy cái thằng vô tình này!
Dialogue: 0,0:12:50.96,0:12:52.98,Default,,0,0,0,,Mọi người nhìn kìa, mọi người nhìn kìa,\Nđồng phạm đang chạy trốn!
Dialogue: 0,0:12:53.58,0:12:55.83,Default,,0,0,0,,Sakuragi, mày muốn bán đứng bạn bè à?
Dialogue: 0,0:12:55.86,0:12:57.26,Default,,0,0,0,,Đừng có quay lại, đi mau!
Dialogue: 0,0:12:57.90,0:12:59.57,Default,,0,0,0,,Mấy cái thằng chỉ biết đến mình này!
Dialogue: 0,0:13:00.46,0:13:02.64,Default,,0,0,0,,Bọn mày hèn hạ quá, hèn hạ vô sỉ!
Dialogue: 0,0:13:02.82,0:13:04.82,Default,,0,0,0,,Ngoan ngoãn một chút cho tôi.
Dialogue: 0,0:13:10.17,0:13:11.78,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:13:12.51,0:13:14.47,Default,,0,0,0,,Tôi sẽ không tha cho cậu đâu,\Ncái tên nhóc thối này!
Dialogue: 0,0:13:15.65,0:13:17.06,Default,,0,0,0,,Đau quá.
Dialogue: 0,0:13:17.62,0:13:19.92,Default,,0,0,0,,Cái tên Sakuragi này\Ncó phải là hơi lộn xộn không?
Dialogue: 0,0:13:21.04,0:13:23.37,Default,,0,0,0,,Đáng ghét, sao lại có loại học sinh\Nhỗn như vậy chứ.
Dialogue: 0,0:13:23.93,0:13:24.94,Default,,0,0,0,,Đau quá.
Dialogue: 0,0:13:25.62,0:13:27.18,Default,,0,0,0,,[Thật không ngờ.]
Dialogue: 0,0:13:27.68,0:13:30.25,Default,,0,0,0,,[Có hai giáo viên thể dục mạnh như vậy ở đây]
Dialogue: 0,0:13:30.27,0:13:32.92,Default,,0,0,0,,[mà cậu ta\Ncó thể trốn thoát như không có việc gì.]
Dialogue: 0,0:13:33.51,0:13:36.46,Default,,0,0,0,,[Chỉ với sức mạnh này thôi, đã đủ để hình thành\Nlực chiến đấu rất khá rồi.]
Dialogue: 0,0:13:36.48,0:13:39.14,Default,,0,0,0,,[Đúng là mình không nhìn nhầm.]
Dialogue: 0,0:13:39.82,0:13:44.26,Default,,0,0,0,,[Sakuragi, cậu là một chàng trai\Nsinh ra để dành cho Judo.]
Dialogue: 0,0:13:44.75,0:13:48.78,Default,,0,0,0,,[Đừng có chơi bóng rổ gì nữa,\Nđến câu lạc bộ Judo đi, Sakuragi Hanamichi.]
Dialogue: 0,0:13:49.22,0:13:51.89,Default,,0,0,0,,Cậu đang lẩm bẩm gì vậy hả Aota?\NQua đây cho tôi.
Dialogue: 0,0:13:52.70,0:13:54.36,Default,,0,0,0,,Thật là, cậu học lớp 12 rồi đấy!
Dialogue: 0,0:13:54.65,0:13:56.24,Default,,0,0,0,,- Có thể biết điều chút không hả?\N- Đau quá!
Dialogue: 0,0:13:57.22,0:13:58.98,Default,,0,0,0,,Thật là, thật không biết đang nghĩ gì nữa.
Dialogue: 0,0:14:05.67,0:14:07.83,Default,,0,0,0,,[Haruko lại xinh hơn rồi.]
Dialogue: 0,0:14:12.32,0:14:15.78,Default,,0,0,0,,Người đó đang làm gì vậy?\NNgười học lớp 12 ấy. Haruko, cậu có quen không?
Dialogue: 0,0:14:16.53,0:14:18.70,Default,,0,0,0,,Đó là bạn chơi chung từ nhỏ với anh mình,
Dialogue: 0,0:14:19.10,0:14:21.21,Default,,0,0,0,,tên là Aota Tatshuhiko.
Dialogue: 0,0:14:21.32,0:14:24.83,Default,,0,0,0,,Đầu tiên là quân đoàn Sakuragi,\Nbây giờ là Aota này.
Dialogue: 0,0:14:25.25,0:14:27.88,Default,,0,0,0,,Haruko à, cậu quen toàn người kỳ lạ,\Nthật không chịu nổi.
Dialogue: 0,0:14:27.90,0:14:29.50,Default,,0,0,0,,Nhưng anh này cũng hơi kỳ lạ đấy.
Dialogue: 0,0:14:29.73,0:14:32.28,Default,,0,0,0,,Không có chuyện đó đâu,\Nmọi người đều là người tốt mà.
Dialogue: 0,0:14:33.85,0:14:36.88,Default,,0,0,0,,Người anh cậu quen rất kỳ lạ.
Dialogue: 0,0:14:37.03,0:14:39.05,Default,,0,0,0,,[Lớp 12-5]
Dialogue: 0,0:14:40.37,0:14:42.67,Default,,0,0,0,,Nghe nói mày ngồi đó một tiếng à, Aota?
Dialogue: 0,0:14:42.97,0:14:43.96,Default,,0,0,0,,Tao thật không hiểu nổi,
Dialogue: 0,0:14:43.98,0:14:45.99,Default,,0,0,0,,mày làm đội trưởng câu lạc bộ Judo\Nkiểu gì vậy?
Dialogue: 0,0:14:46.31,0:14:47.13,Default,,0,0,0,,Đừng có càm ràm.
Dialogue: 0,0:14:47.89,0:14:51.84,Default,,0,0,0,,Akagi, bọn tao muốn tên Sakuragi đó,\Ntao quyết định rồi.
Dialogue: 0,0:14:52.61,0:14:54.02,Default,,0,0,0,,Mày lại nhắc đến chuyện hôm đó nữa à?
Dialogue: 0,0:14:54.57,0:14:57.38,Default,,0,0,0,,Tên nhóc đó\Ntrời sinh để làm một tuyển thủ Judo.
Dialogue: 0,0:14:57.71,0:15:01.17,Default,,0,0,0,,[Mày nhìn cơ thể ấy,\Nsức mạnh ấy, cả can đảm của cậu ta mà xem.]
Dialogue: 0,0:15:01.62,0:15:05.06,Default,,0,0,0,,[Thằng nhóc đó không phải là chàng trai\Ncó thể thỏa mãn chỉ bằng vài kỹ năng bóng.]
Dialogue: 0,0:15:05.24,0:15:07.64,Default,,0,0,0,,[Thích hợp với thằng nhóc đó nhất\Nlà kỹ năng chiến đấu.]
Dialogue: 0,0:15:10.86,0:15:12.72,Default,,0,0,0,,Mày đừng có tự quyết định được không hả?
Dialogue: 0,0:15:12.99,0:15:14.22,Default,,0,0,0,,Không phải, là kỹ năng chiến đấu.
Dialogue: 0,0:15:14.79,0:15:17.69,Default,,0,0,0,,Mà thứ quan trọng nhất\Nlà tâm trạng của thằng nhóc đó.
Dialogue: 0,0:15:18.61,0:15:22.01,Default,,0,0,0,,Mày cho rằng cậu ta thật sự thích bóng rổ à?
Dialogue: 0,0:15:24.29,0:15:26.59,Default,,0,0,0,,Tao nghĩ đó không phải là\Nsuy nghĩ thật lòng của cậu ta.
Dialogue: 0,0:15:27.38,0:15:30.21,Default,,0,0,0,,Thứ thằng nhóc đó cũng thích\Nkhông phải là bóng rổ mà là Haruko.
Dialogue: 0,0:15:30.72,0:15:31.55,Default,,0,0,0,,Không phải à?
Dialogue: 0,0:15:31.96,0:15:34.41,Default,,0,0,0,,Cậu ta không chơi bóng rổ vì thích bóng rổ,
Dialogue: 0,0:15:34.43,0:15:36.88,Default,,0,0,0,,mà là chỉ chơi vì muốn\Ncó được sự yêu thích của Haruko.
Dialogue: 0,0:15:37.97,0:15:39.22,Default,,0,0,0,,Nhưng việc này cũng khó trách,
Dialogue: 0,0:15:39.45,0:15:42.24,Default,,0,0,0,,Haruko đúng là càng ngày càng xinh xắn.
Dialogue: 0,0:15:42.52,0:15:45.70,Default,,0,0,0,,Mới không gặp một thời gian\Nmà cứ như trở thành người lớn rồi ấy,
Dialogue: 0,0:15:45.95,0:15:47.98,Default,,0,0,0,,hơn nữa cũng vào được trường cấp ba Shohoku.
Dialogue: 0,0:15:48.40,0:15:49.30,Default,,0,0,0,,Tao may mắn quá đi!
Dialogue: 0,0:15:50.69,0:15:52.42,Default,,0,0,0,,Cuối cùng thì mày đang nói những gì vậy?
Dialogue: 0,0:15:52.92,0:15:53.48,Default,,0,0,0,,Akagi,
Dialogue: 0,0:15:54.59,0:15:58.39,Default,,0,0,0,,mày lấy Haruko ra để làm mồi\Nquấn chết Sakuragi ở đội bóng rổ,
Dialogue: 0,0:15:58.42,0:16:00.12,Default,,0,0,0,,mày nghĩ làm như vậy là đúng sao?
Dialogue: 0,0:16:00.32,0:16:01.39,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:16:03.31,0:16:05.28,Default,,0,0,0,,Một chàng trai có tư chất như cậu ta
Dialogue: 0,0:16:06.46,0:16:08.72,Default,,0,0,0,,không phải là nên để cậu ta làm
Dialogue: 0,0:16:09.02,0:16:12.29,Default,,0,0,0,,những việc thích hợp với cậu ta nhất, cũng là\Nviệc cậu ta muốn làm nhất mới là đúng đắn ư?
Dialogue: 0,0:16:18.20,0:16:22.29,Default,,0,0,0,,Không phải tao xin cậu ta,\Nnói cậu ta vào đội bóng rổ bọn tao.
Dialogue: 0,0:16:23.58,0:16:24.41,Default,,0,0,0,,Vậy à?
Dialogue: 0,0:16:25.12,0:16:27.47,Default,,0,0,0,,Nói vậy thì mày sẽ không dùng thân phận\Nlà đội trưởng đội bóng rổ
Dialogue: 0,0:16:27.50,0:16:31.42,Default,,0,0,0,,để ngăn cản câu lạc bộ Judo bọn tao\Nkéo Sakuragi về phải không?
Dialogue: 0,0:16:31.88,0:16:33.11,Default,,0,0,0,,Đó là quyền tự do của cậu ta.
Dialogue: 0,0:16:33.56,0:16:34.29,Default,,0,0,0,,Vậy à?
Dialogue: 0,0:16:35.10,0:16:38.41,Default,,0,0,0,,Khoan đã, người làm đội phó như tao\Nkhông đồng ý chuyện này đâu đấy!
Dialogue: 0,0:16:39.11,0:16:39.89,Default,,0,0,0,,Aota.
Dialogue: 0,0:16:41.31,0:16:43.08,Default,,0,0,0,,Đội trưởng bọn mày đã đồng ý rồi,
Dialogue: 0,0:16:43.57,0:16:45.97,Default,,0,0,0,,đội phó còn ý kiến gì chứ, tao không nghe thấy.
Dialogue: 0,0:16:49.06,0:16:50.38,Default,,0,0,0,,Đợi một lát, Akagi!
Dialogue: 0,0:16:50.59,0:16:52.59,Default,,0,0,0,,Như vậy có được không hả, Akagi?
Dialogue: 0,0:17:04.64,0:17:06.07,Default,,0,0,0,,Anh là người ban nãy.
Dialogue: 0,0:17:06.27,0:17:07.94,Default,,0,0,0,,Tôi là người dẫn đầu của câu lạc bộ Judo, Aota.
Dialogue: 0,0:17:08.27,0:17:10.66,Default,,0,0,0,,Sakuragi Hanamichi,\Ntôi có lời muốn nói với cậu.
Dialogue: 0,0:17:17.71,0:17:18.64,Default,,0,0,0,,Haruko!
Dialogue: 0,0:17:18.98,0:17:19.74,Default,,0,0,0,,Anh Tat!
Dialogue: 0,0:17:20.95,0:17:21.85,Default,,0,0,0,,Anh Tat?
Dialogue: 0,0:17:24.37,0:17:25.36,Default,,0,0,0,,Haruko.
Dialogue: 0,0:17:28.80,0:17:30.78,Default,,0,0,0,,Em đúng là ngày càng xinh xắn đấy, Haruko.
Dialogue: 0,0:17:34.38,0:17:35.37,Default,,0,0,0,,[Tự nhiên lên nào.]
Dialogue: 0,0:17:35.78,0:17:37.94,Default,,0,0,0,,[Những lời ban nãy của mình là thật lòng.]
Dialogue: 0,0:17:38.84,0:17:41.75,Default,,0,0,0,,Anh có lời muốn nói với Sakuragi,\Nchúng ta nói chuyện sau nhé.
Dialogue: 0,0:17:42.87,0:17:44.81,Default,,0,0,0,,Cuối cùng thì tên này...
Dialogue: 0,0:17:49.54,0:17:51.27,Default,,0,0,0,,[Kia chẳng phải là Aota với Sakuragi à?]
Dialogue: 0,0:17:52.02,0:17:53.11,Default,,0,0,0,,[Cái thằng Aota này.]
Dialogue: 0,0:17:56.14,0:17:58.37,Default,,0,0,0,,Nào, mặc bộ đồ này vào đi, Sakuragi.
Dialogue: 0,0:18:00.34,0:18:03.62,Default,,0,0,0,,Cậu sinh ra là để làm một tuyển thủ Judo,
Dialogue: 0,0:18:04.45,0:18:06.42,Default,,0,0,0,,vào câu lạc bộ Judo của bọn tôi đi, Sakuragi.
Dialogue: 0,0:18:07.07,0:18:08.26,Default,,0,0,0,,Judo?
Dialogue: 0,0:18:09.63,0:18:11.90,Default,,0,0,0,,Anh đang nói lung tung gì vậy hả?\NKhoan hãy nói cái này.
Dialogue: 0,0:18:12.14,0:18:13.82,Default,,0,0,0,,Cuối cùng thì anh có quan hệ gì với Haruko?
Dialogue: 0,0:18:13.85,0:18:15.24,Default,,0,0,0,,Tại sao cậu ấy lại gọi anh là anh Tat?
Dialogue: 0,0:18:16.97,0:18:18.33,Default,,0,0,0,,Cậu hâm mộ phải không?
Dialogue: 0,0:18:20.41,0:18:21.31,Default,,0,0,0,,Anh Tat.
Dialogue: 0,0:18:25.28,0:18:26.34,Default,,0,0,0,,Được.
Dialogue: 0,0:18:31.11,0:18:33.48,Default,,0,0,0,,E là cùng lắm thì cậu\Nchỉ được em ấy gọi là Sakuragi thôi.
Dialogue: 0,0:18:33.85,0:18:36.75,Default,,0,0,0,,Mức độ thân mật giữa hai người\Nchỉ cần nghe cách gọi là biết rõ luôn rồi.
Dialogue: 0,0:18:36.77,0:18:38.56,Default,,0,0,0,,Sakuragi, tôi thắng chắc đấy.
Dialogue: 0,0:18:38.71,0:18:39.65,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:18:40.20,0:18:41.10,Default,,0,0,0,,Kogure,
Dialogue: 0,0:18:41.79,0:18:44.66,Default,,0,0,0,,hành động lén lén lút lút nhìn này\Nkhông hợp với phong cách của chúng ta đâu.
Dialogue: 0,0:18:44.95,0:18:45.51,Default,,0,0,0,,Tôi về trước đây.
Dialogue: 0,0:18:45.66,0:18:46.67,Default,,0,0,0,,Không được.
Dialogue: 0,0:18:47.09,0:18:49.10,Default,,0,0,0,,Chúng ta không thể để Sakuragi qua bên Judo.
Dialogue: 0,0:18:51.15,0:18:51.71,Default,,0,0,0,,Cậu xem đi,
Dialogue: 0,0:18:52.45,0:18:54.82,Default,,0,0,0,,cái thằng Aota đó còn mặc đồ Judo nữa này.
Dialogue: 0,0:18:55.08,0:18:57.57,Default,,0,0,0,,Không phải là muốn ép buộc\NSakuragi vào đấy chứ?
Dialogue: 0,0:18:58.52,0:19:00.39,Default,,0,0,0,,Lỡ như dùng hình phạt riêng...
Dialogue: 0,0:19:00.45,0:19:02.65,Default,,0,0,0,,Thằng ngốc này, đừng thấy cậu ta như vậy,
Dialogue: 0,0:19:02.75,0:19:04.65,Default,,0,0,0,,thực lực của Aota khá có tiếng trong tỉnh,
Dialogue: 0,0:19:05.01,0:19:06.77,Default,,0,0,0,,sao cậu ta có thể đối đầu\Nvới một người ngoài nghề chứ.
Dialogue: 0,0:19:07.71,0:19:12.67,Default,,0,0,0,,[Cũng không biết là một thời gian trước,\Nrốt cuộc thì tên cao thủ bóng rổ nào]
Dialogue: 0,0:19:12.69,0:19:14.63,Default,,0,0,0,,[trưng ra vẻ mặt nghiêm túc\Nmuốn thi đấu với người ngoài nghề nữa.]
Dialogue: 0,0:19:15.39,0:19:17.62,Default,,0,0,0,,Sakuragi, cậu có biết cái này là gì không?
Dialogue: 0,0:19:23.04,0:19:25.08,Default,,0,0,0,,Cái người này, thì ra anh có sở thích như vậy.
Dialogue: 0,0:19:25.13,0:19:25.86,Default,,0,0,0,,Đúng là một tên nguy hiểm.
Dialogue: 0,0:19:27.41,0:19:28.63,Default,,0,0,0,,Cậu ngây thơ thật đấy, Sakuragi.
Dialogue: 0,0:19:28.89,0:19:30.55,Default,,0,0,0,,Nhìn cho rõ xem đây là ai.
Dialogue: 0,0:19:31.88,0:19:33.47,Default,,0,0,0,,Chẳng lẽ... đây là...
Dialogue: 0,0:19:33.50,0:19:34.87,Default,,0,0,0,,Không sai chút nào.
Dialogue: 0,0:19:35.45,0:19:38.98,Default,,0,0,0,,Đây là hình hồi tiểu học của Haruko.
Dialogue: 0,0:19:39.97,0:19:41.19,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:19:41.71,0:19:42.61,Default,,0,0,0,,[Đây là hình năm lớp bảy,]
Dialogue: 0,0:19:43.04,0:19:43.77,Default,,0,0,0,,[đây là lớp tám,]
Dialogue: 0,0:19:44.06,0:19:45.09,Default,,0,0,0,,[đây là lớp chín.]
Dialogue: 0,0:19:45.72,0:19:46.24,Default,,0,0,0,,Còn nữa.
Dialogue: 0,0:19:46.31,0:19:48.22,Default,,0,0,0,,Đây là hình tốt nghiệp cấp hai.
Dialogue: 0,0:19:48.84,0:19:50.35,Default,,0,0,0,,Có cả hình tốt nghiệp cấp hai...
Dialogue: 0,0:19:52.38,0:19:54.47,Default,,0,0,0,,Đây là Haruko năm cấp hai.
Dialogue: 0,0:19:55.03,0:19:57.16,Default,,0,0,0,,Đáng yêu quá.
Dialogue: 0,0:19:57.72,0:19:59.31,Default,,0,0,0,,Bọn chúng là báu vật của tôi cả đấy.
Dialogue: 0,0:20:03.16,0:20:05.45,Default,,0,0,0,,Chỉ cần cậu tham gia câu lạc bộ Judo
Dialogue: 0,0:20:05.80,0:20:09.07,Default,,0,0,0,,thì tôi sẽ tặng hết cho cậu, thế nào?
Dialogue: 0,0:20:10.98,0:20:15.11,Default,,0,0,0,,Thằng ngu này, người muốn dùng Haruko\Nlàm mồi nhử là mày mới đúng!
Dialogue: 0,0:20:15.45,0:20:18.62,Default,,0,0,0,,Còn dám nói một đống câu đẹp đẽ đó\Ntrước mặt tao nữa.
Dialogue: 0,0:20:18.87,0:20:20.63,Default,,0,0,0,,Mày đúng là hèn hạ vô sỉ.
Dialogue: 0,0:20:21.06,0:20:24.03,Default,,0,0,0,,Không ổn rồi Akagi.\NCậu xem mặt của Sakuragi kìa.
Dialogue: 0,0:20:27.32,0:20:28.25,Default,,0,0,0,,Anh nói gì?
Dialogue: 0,0:20:29.91,0:20:31.84,Default,,0,0,0,,Cậu ta nghiêng hẳn sang một bên rồi.
Dialogue: 0,0:20:32.39,0:20:34.15,Default,,0,0,0,,Tên đó là người như vậy.
Dialogue: 0,0:20:37.07,0:20:38.63,Default,,0,0,0,,Sakuragi Hanamichi,
Dialogue: 0,0:20:38.92,0:20:40.48,Default,,0,0,0,,chỉ cần cậu vào câu lạc bộ Judo của bọn tôi
Dialogue: 0,0:20:40.61,0:20:42.95,Default,,0,0,0,,thì những tấm hình này sẽ thuộc về cậu.
Dialogue: 0,0:20:43.41,0:20:44.81,Default,,0,0,0,,Thế nào, Sakuragi?
Dialogue: 0,0:20:52.83,0:20:56.53,Default,,0,0,0,,[Sakuragi Hanamichi dường như\Nsắp rơi vào cái bẫy của Aota.]
Dialogue: 0,0:20:57.99,0:21:02.32,Default,,0,0,0,,[Cuối cùng thì cậu ấy có bỏ rơi bóng rổ\Nđể vào câu lạc bộ Judo không?]
Dialogue: 0,0:21:06.73,0:21:10.31,Default,,0,0,0,,♫ Đôi mắt luôn hướng về phía cậu ♫
Dialogue: 0,0:21:10.51,0:21:14.65,Default,,0,0,0,,♫ Từ lúc vừa mới gặp cho đến hiện tại ♫
Dialogue: 0,0:21:14.67,0:21:18.37,Default,,0,0,0,,♫ Chỉ cần có cậu ở bên ♫
Dialogue: 0,0:21:18.40,0:21:22.16,Default,,0,0,0,,♫ Những thứ khác đều không cần a ♫
Dialogue: 0,0:21:22.85,0:21:26.59,Default,,0,0,0,,♫ Căng thẳng tột độ vì ước mơ ♫
Dialogue: 0,0:21:31.87,0:21:36.53,Default,,0,0,0,,♫ Nhìn thấy vẻ mặt cậu vui như thế ♫
Dialogue: 0,0:21:36.55,0:21:39.89,Default,,0,0,0,,♫ Không có ngụy trang gì cả ♫
Dialogue: 0,0:21:39.92,0:21:45.88,Default,,0,0,0,,♫ Luôn mang theo máy nhắn tin\Nđể cậu có thể tìm mình bất cứ lúc nào ♫
Dialogue: 0,0:21:46.65,0:21:52.09,Default,,0,0,0,,♫ Am hiểu hơn về xe ♫
Dialogue: 0,0:21:52.26,0:21:55.84,Default,,0,0,0,,♫ Cũng đang cố gắng\Nhọc cách tự chăm sóc mình ♫
Dialogue: 0,0:21:56.52,0:22:00.20,Default,,0,0,0,,♫ Tuy là có hơi bối rối ♫
Dialogue: 0,0:22:00.22,0:22:06.08,Default,,0,0,0,,♫ Nhưng vẫn quyết định\Ntheo người này cả đời ♫
Dialogue: 0,0:22:08.74,0:22:12.28,Default,,0,0,0,,♫ Trong mắt chỉ có mỗi mình cậu ♫
Dialogue: 0,0:22:12.31,0:22:16.79,Default,,0,0,0,,♫ Một mình chờ đợi\Ntrong căn phòng của đôi ta ♫
Dialogue: 0,0:22:16.81,0:22:24.51,Default,,0,0,0,,♫ Nụ cười của cậu\Ngiống như là cái khóa màu hoa hồng ♫
Dialogue: 0,0:22:25.29,0:22:33.03,Default,,0,0,0,,♫ Tiến về trước, cô gái không có ước mơ ♫
Dialogue: 0,0:22:36.21,0:22:37.76,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:39.87,0:22:42.42,Default,,0,0,0,,Thế nào, Sakuragi,\Nmuốn những tấm hình này phải không?
Dialogue: 0,0:22:42.52,0:22:43.31,Default,,0,0,0,,Muốn!
Dialogue: 0,0:22:43.67,0:22:47.16,Default,,0,0,0,,Haruko đáng yêu thế này\Nlại là anh em với tên đó.
Dialogue: 0,0:22:47.19,0:22:51.71,Default,,0,0,0,,Tinh Tinh Bự chết tiệt, làm mình tức quá mà.
Dialogue: 0,0:22:51.74,0:22:54.70,Default,,0,0,0,,Đúng vậy, chúng ta hãy bắt tay nhau\Nvì mục tiêu chung đi.
Dialogue: 0,0:22:54.73,0:22:56.12,Default,,0,0,0,,Nói đúng lắm.
Dialogue: 0,0:22:56.15,0:22:59.46,Default,,0,0,0,,Cầm hình rồi tham gia câu lạc bộ Judo nào.
Dialogue: 0,0:22:59.49,0:23:00.68,Default,,0,0,0,,"Cao thủ bóng rổ!"
Dialogue: 0,0:23:00.71,0:23:02.32,Default,,0,0,0,,"Tôi muốn chơi bóng rổ!"
Dialogue: 0,0:23:02.53,0:23:04.00,Default,,0,0,0,,Chắc chắn phải xem đó.
