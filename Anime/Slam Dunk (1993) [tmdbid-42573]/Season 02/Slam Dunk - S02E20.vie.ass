Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:04.36,0:00:11.22,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:29.02,0:00:35.59,Default,,0,0,0,,♫ Ánh mặt trời chói rọi phía sau lưng,\Ntôi bước trên con đường này ♫
Dialogue: 0,0:00:35.83,0:00:41.93,Default,,0,0,0,,♫ Cũng như thường lệ, lại bị vỗ vai ♫
Dialogue: 0,0:00:42.56,0:00:48.90,Default,,0,0,0,,♫ Cậu là nữ thần của tôi, không có lý do gì cả ♫
Dialogue: 0,0:00:49.23,0:00:54.43,Default,,0,0,0,,♫ Nhưng lại chưa từng khoác lấy tay tôi ♫
Dialogue: 0,0:00:54.67,0:01:00.94,Default,,0,0,0,,♫ Không biết từ lúc nào,\Nánh mắt đã không thể rời đi ♫
Dialogue: 0,0:01:01.34,0:01:07.44,Default,,0,0,0,,♫ Không buông ra, không do dự,\Nđiên cuồng vì cậu ♫
Dialogue: 0,0:01:07.85,0:01:14.72,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:01:14.96,0:01:21.30,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:01:21.50,0:01:28.60,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm tiến lên một bước ♫
Dialogue: 0,0:01:28.81,0:01:36.23,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:01:47.02,0:01:48.70,Default,,0,0,0,,[Cuộc tranh đấu giành quyền tham gia\Nvòng chung kết của Shohoku và Shoyo]
Dialogue: 0,0:01:48.73,0:01:51.44,Default,,0,0,0,,[gây cấn đến nghẹt thở.]
Dialogue: 0,0:01:51.46,0:01:55.05,Default,,0,0,0,,[Mitsui ném được cú ném ba điểm\Nba lần liên tục, điên cuồng ghi điểm,]
Dialogue: 0,0:01:55.18,0:01:57.70,Default,,0,0,0,,[cuối cùng, chỉ trong hai phút rưỡi cuối cùng,]
Dialogue: 0,0:01:58.18,0:02:00.35,Default,,0,0,0,,[Shohoku đã đuổi kịp Shoyo,\Nkéo lại điểm số bằng nhau.]
Dialogue: 0,0:02:06.56,0:02:10.68,Default,,0,0,0,,[Nhưng lúc này đây, Mitsui cũng\Nrời sân nghỉ ngơi, đổi cho Kogure ra sân.]
Dialogue: 0,0:02:13.93,0:02:14.59,Default,,0,0,0,,[Mặt khác,]
Dialogue: 0,0:02:14.68,0:02:17.03,Default,,0,0,0,,[vì đã vi phạm lỗi bốn lần\Nnên có nguy cơ phải rời sân,]
Dialogue: 0,0:02:17.21,0:02:20.71,Default,,0,0,0,,[nhưng vì sợ phải rời sân nên Sakuragi\NHanamichi không dám ra tay giành bóng.]
Dialogue: 0,0:02:25.23,0:02:27.50,Default,,0,0,0,,Rốt cuộc thì mày đang sợ cái gì?
Dialogue: 0,0:02:29.70,0:02:32.14,Default,,0,0,0,,Như thế chẳng giống mày chút nào.
Dialogue: 0,0:02:40.05,0:02:41.98,Default,,0,0,0,,[Phạm lỗi bốn lần thì đã sao?]
Dialogue: 0,0:02:42.11,0:02:45.10,Default,,0,0,0,,[Thiên tài như mình\Nchắc chắn không thành vấn đề!]
Dialogue: 0,0:02:45.55,0:02:54.28,Default,,0,0,0,,[Hanamichi - Cú úp rổ nóng bỏng]
Dialogue: 0,0:02:47.51,0:02:49.98,Default,,0,0,0,,[Hanamichi - Cú úp rổ nóng bỏng!]
Dialogue: 0,0:02:54.41,0:03:03.61,Default,,0,0,0,,Tiến công! Tiến công! Tiến công!
Dialogue: 0,0:03:03.78,0:03:12.82,Default,,0,0,0,,Phòng thủ! Phòng thủ! Phòng thủ!
Dialogue: 0,0:03:28.18,0:03:30.45,Default,,0,0,0,,[Xin các cậu! Nhất định phải thắng!]
Dialogue: 0,0:03:31.25,0:03:33.65,Default,,0,0,0,,Sakuragi Hanamichi đã phạm lỗi bốn lần,
Dialogue: 0,0:03:33.80,0:03:35.94,Default,,0,0,0,,còn hai người là đàn anh Akagi và Rukawa
Dialogue: 0,0:03:35.96,0:03:37.24,Default,,0,0,0,,chỉ phạm lỗi hai lần.
Dialogue: 0,0:03:38.58,0:03:42.38,Default,,0,0,0,,Cố lên mọi người! Shohoku cố lên!
Dialogue: 0,0:03:42.41,0:03:43.43,Default,,0,0,0,,Bắt đầu nào!
Dialogue: 0,0:03:44.33,0:03:46.45,Default,,0,0,0,,Kogure, phấn khởi đấy!
Dialogue: 0,0:03:59.16,0:04:00.88,Default,,0,0,0,,Ngay lúc quan trọng như vậy,
Dialogue: 0,0:04:01.10,0:04:03.06,Default,,0,0,0,,về mặt tinh thần mà thua người khác\Nthì chắc chắn sẽ thua.
Dialogue: 0,0:04:03.09,0:04:04.99,Default,,0,0,0,,Xem một trận bóng thôi\Nmà tôi ngứa hết mình mẩy.
Dialogue: 0,0:04:05.04,0:04:07.16,Default,,0,0,0,,Tôi cũng muốn mau chóng thi đấu.
Dialogue: 0,0:04:07.44,0:04:09.73,Default,,0,0,0,,Cây chủ chốt của trận đấu\Nđổi thành Sakuragi rồi sao?
Dialogue: 0,0:04:10.05,0:04:10.74,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:04:11.50,0:04:14.06,Default,,0,0,0,,Trông cậu ta sợ trước sợ sau không dám ra tay,
Dialogue: 0,0:04:14.09,0:04:15.88,Default,,0,0,0,,thà là bất chấp tất cả chơi hết mình còn hơn.
Dialogue: 0,0:04:18.11,0:04:19.74,Default,,0,0,0,,Sakuragi, cậu tính làm sao đây?
Dialogue: 0,0:04:21.40,0:04:25.42,Default,,0,0,0,,[Thiên tài Sakuragi,\Nvua bóng bật bảng Sakuragi!]
Dialogue: 0,0:04:25.54,0:04:27.47,Default,,0,0,0,,[Vua bắt bóng giỏi nhất tỉnh!]
Dialogue: 0,0:04:30.45,0:04:31.97,Default,,0,0,0,,Mọi người chơi chậm thôi.
Dialogue: 0,0:04:48.22,0:04:49.05,Default,,0,0,0,,Cú bắt bóng bật bảng!
Dialogue: 0,0:04:54.24,0:04:55.93,Default,,0,0,0,,[Nhìn xem! Quả nhiên!]
Dialogue: 0,0:04:55.96,0:04:59.12,Default,,0,0,0,,[Mình đúng là thiên tài mà!]
Dialogue: 0,0:04:59.67,0:05:02.34,Default,,0,0,0,,Giành hay lắm, vào thêm một bóng nữa nào,\NSakuragi, cố lên!
Dialogue: 0,0:05:02.58,0:05:04.09,Default,,0,0,0,,Làm tốt lắm, Sakuragi!
Dialogue: 0,0:05:04.27,0:05:05.47,Default,,0,0,0,,Mau tiến lên!
Dialogue: 0,0:05:05.98,0:05:06.68,Default,,0,0,0,,Chuyền bóng!
Dialogue: 0,0:05:07.50,0:05:08.79,Default,,0,0,0,,Chỉ là động tác giả thôi.
Dialogue: 0,0:05:09.53,0:05:10.46,Default,,0,0,0,,Tốt lắm, chuyền tốt lắm!
Dialogue: 0,0:05:10.83,0:05:14.22,Default,,0,0,0,,Đương nhiên rồi, thiên tài Sakuragi này\Nchuyền bóng thì chắc chắn thành công!
Dialogue: 0,0:05:14.32,0:05:15.42,Default,,0,0,0,,Mặt dày thật đấy!
Dialogue: 0,0:05:15.58,0:05:19.60,Default,,0,0,0,,Sức bật cao của cậu ta đúng là ngang bằng với Rukawa,\Nđều là những người giỏi nhất tỉnh.
Dialogue: 0,0:05:19.69,0:05:23.32,Default,,0,0,0,,Không. Cho dù tìm khắp toàn quốc\Ncũng không có ai nhảy cao như cậu ta.
Dialogue: 0,0:05:25.85,0:05:27.32,Default,,0,0,0,,Bây giờ đổi sang cách chơi phòng thủ rồi.
Dialogue: 0,0:05:27.42,0:05:28.60,Default,,0,0,0,,Cố lên!
Dialogue: 0,0:05:36.17,0:05:37.16,Default,,0,0,0,,Mau phòng thủ!
Dialogue: 0,0:05:51.82,0:05:52.68,Default,,0,0,0,,Mau vào đi!
Dialogue: 0,0:05:58.10,0:06:00.42,Default,,0,0,0,,- Vào rồi!\N- Thắng rồi!
Dialogue: 0,0:06:00.56,0:06:02.35,Default,,0,0,0,,Chuyển bại thành thắng!
Dialogue: 0,0:06:08.44,0:06:09.89,Default,,0,0,0,,Rukawa! Rukawa!
Dialogue: 0,0:06:09.91,0:06:11.81,Default,,0,0,0,,Rukawa! Mình yêu cậu!
Dialogue: 0,0:06:11.93,0:06:15.57,Default,,0,0,0,,Được lắm, thắng rồi!
Dialogue: 0,0:06:16.80,0:06:18.66,Default,,0,0,0,,[Vua bóng bật bảng - Sakuragi Hanamichi.]
Dialogue: 0,0:06:21.60,0:06:24.73,Default,,0,0,0,,[Còn tên siêu sao Rukawa đó nữa.]
Dialogue: 0,0:06:26.02,0:06:27.90,Default,,0,0,0,,[Nếu hai người họ phối hợp với nhau...]
Dialogue: 0,0:06:28.56,0:06:31.84,Default,,0,0,0,,Mày lại giành công của tao!
Dialogue: 0,0:06:31.94,0:06:34.10,Default,,0,0,0,,Mày đừng ở đấy trừng mắt với tao!
Dialogue: 0,0:06:37.66,0:06:38.56,Default,,0,0,0,,Đội trưởng.
Dialogue: 0,0:07:01.00,0:07:02.14,Default,,0,0,0,,Không hay rồi.
Dialogue: 0,0:07:03.25,0:07:06.34,Default,,0,0,0,,Bây giờ sự lãnh đạo của Fujima\Nkhông ổn nữa rồi.
Dialogue: 0,0:07:06.76,0:07:08.46,Default,,0,0,0,,Lần này Shoyo nguy rồi!
Dialogue: 0,0:07:08.77,0:07:10.41,Default,,0,0,0,,Sức chiến đấu của hai người mới đó\Nhợp lại với nhau
Dialogue: 0,0:07:10.65,0:07:13.24,Default,,0,0,0,,đã nằm ngoài sức tưởng tượng của Fujima.
Dialogue: 0,0:07:13.64,0:07:16.98,Default,,0,0,0,,Hai thằng nhóc đó tiến bộ không ít,\Nkhông đơn giản.
Dialogue: 0,0:07:17.38,0:07:20.24,Default,,0,0,0,,Không hay rồi,\Nkhông hay rồi huấn luyện viên ơi!
Dialogue: 0,0:07:20.45,0:07:23.33,Default,,0,0,0,,Nếu trong tuần chung kết chúng ta\Nphải đối mặt với Shohoku,
Dialogue: 0,0:07:23.73,0:07:27.17,Default,,0,0,0,,vậy thì càng khó đối phó hơn so với\Nvòng giao hữu lần trước đúng không?
Dialogue: 0,0:07:27.36,0:07:28.75,Default,,0,0,0,,Đừng kinh ngạc thế, Hikoichi!
Dialogue: 0,0:07:29.75,0:07:33.31,Default,,0,0,0,,Đúng thật là Shohoku đã tiến bộ\Nrất nhiều trong khoảng thời gian ngắn,
Dialogue: 0,0:07:33.84,0:07:36.07,Default,,0,0,0,,nhưng họ cũng có những nhân tố không ổn định.
Dialogue: 0,0:07:36.88,0:07:38.48,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:07:38.59,0:07:41.58,Default,,0,0,0,,Mày đừng giả vờ giả vịt nữa, Rukawa!
Dialogue: 0,0:07:41.74,0:07:43.10,Default,,0,0,0,,Mày nói mày đấy à?
Dialogue: 0,0:07:44.21,0:07:47.65,Default,,0,0,0,,Lần này mày có thể ghi điểm không phải\Nnhờ vua bóng bật bảng kiêm thiên tài này sao?
Dialogue: 0,0:07:47.85,0:07:51.12,Default,,0,0,0,,Bóng sắp đến nơi, đừng có ngó đông ngó tây,\Ncòn phải đề phòng những lỗ hổng nữa.
Dialogue: 0,0:07:51.24,0:07:52.80,Default,,0,0,0,,Mày dám nói tao là lỗ hổng sao?
Dialogue: 0,0:07:54.42,0:07:55.38,Default,,0,0,0,,Tên khốn!
Dialogue: 0,0:07:55.50,0:07:56.68,Default,,0,0,0,,Cậu không sợ lại phạm lỗi nữa sao?
Dialogue: 0,0:07:56.87,0:07:58.22,Default,,0,0,0,,Tôi là thiên tài, sợ gì chứ?
Dialogue: 0,0:07:59.42,0:08:00.14,Default,,0,0,0,,Fujima!
Dialogue: 0,0:08:04.18,0:08:04.91,Default,,0,0,0,,Cướp tốt lắm!
Dialogue: 0,0:08:05.07,0:08:05.73,Default,,0,0,0,,Mau tấn công!
Dialogue: 0,0:08:07.14,0:08:09.07,Default,,0,0,0,,Mau nhảy lên nào, Sakuragi Hanamichi!
Dialogue: 0,0:08:09.29,0:08:09.84,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:08:11.74,0:08:12.46,Default,,0,0,0,,[Tốt!]
Dialogue: 0,0:08:12.74,0:08:14.13,Default,,0,0,0,,[Mình phải dùng quả này]
Dialogue: 0,0:08:14.15,0:08:16.48,Default,,0,0,0,,[để Rukawa và đám Shoyo câm miệng lại hết!]
Dialogue: 0,0:08:16.51,0:08:19.13,Default,,0,0,0,,Cố lên! Cố lên!
Dialogue: 0,0:08:22.11,0:08:24.08,Default,,0,0,0,,Tôi thấy chắc chắn cậu ta không ném vào được.
Dialogue: 0,0:08:24.55,0:08:25.24,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:08:26.25,0:08:28.22,Default,,0,0,0,,Tên khốn Rukawa, mày nhìn đây!
Dialogue: 0,0:08:30.65,0:08:32.59,Default,,0,0,0,,Hanagata, dùng thân cản cậu ta lại!
Dialogue: 0,0:08:32.70,0:08:33.49,Default,,0,0,0,,Nhưng
Dialogue: 0,0:08:33.74,0:08:34.86,Default,,0,0,0,,không được để cậu ta vượt qua!
Dialogue: 0,0:08:39.12,0:08:40.05,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:08:43.13,0:08:44.06,Default,,0,0,0,,Mình phải chặn được.
Dialogue: 0,0:08:53.19,0:08:54.39,Default,,0,0,0,,Lợi hại quá!
Dialogue: 0,0:08:57.04,0:08:59.10,Default,,0,0,0,,[Là úp rổ.]
Dialogue: 0,0:10:37.11,0:10:42.17,Default,,0,0,0,,Hay lắm!
Dialogue: 0,0:10:55.68,0:10:57.45,Default,,0,0,0,,Áo trắng số 10,
Dialogue: 0,0:10:57.47,0:10:59.10,Default,,0,0,0,,phạm lỗi tấn công.
Dialogue: 0,0:11:00.72,0:11:03.92,Default,,0,0,0,,Lại phạm lỗi rồi!
Dialogue: 0,0:11:03.94,0:11:07.66,Default,,0,0,0,,Đã phạm lỗi năm lần!
Dialogue: 0,0:11:11.24,0:11:12.21,Default,,0,0,0,,Thật đáng ghét!
Dialogue: 0,0:11:12.72,0:11:15.51,Default,,0,0,0,,Sao... sao lại thế?
Dialogue: 0,0:11:15.54,0:11:17.34,Default,,0,0,0,,[Chỉ còn 1 phút 50 giây,]
Dialogue: 0,0:11:17.60,0:11:20.46,Default,,0,0,0,,[Sakuragi Hanamichi vì phạm lỗi\Nnăm lần nên buộc phải rời sân.]
Dialogue: 0,0:11:36.30,0:11:39.16,Default,,0,0,0,,Với năng lực của mày, đúng là rất đáng tiếc.
Dialogue: 0,0:12:21.66,0:12:22.78,Default,,0,0,0,,Thật không ngờ!
Dialogue: 0,0:12:22.97,0:12:24.90,Default,,0,0,0,,Đây là tiếng reo hò lớn tiếng nhất\Ntrong trận đấu hôm nay.
Dialogue: 0,0:12:25.33,0:12:27.59,Default,,0,0,0,,Đến thành quả của mình\Ncũng bị lu mờ bởi cậu ta.
Dialogue: 0,0:12:28.42,0:12:30.35,Default,,0,0,0,,[Sakuragi đúng là Sakuragi.]
Dialogue: 0,0:12:30.38,0:12:32.14,Default,,0,0,0,,[Sức bật cao thật đáng sợ!]
Dialogue: 0,0:12:32.36,0:12:33.62,Default,,0,0,0,,Thật khiến người khác ngạc nhiên!
Dialogue: 0,0:12:34.10,0:12:36.23,Default,,0,0,0,,Được nhiều người ủng hộ như thế.
Dialogue: 0,0:12:37.77,0:12:39.50,Default,,0,0,0,,[Sakuragi, cậu giỏi lắm!]
Dialogue: 0,0:12:39.77,0:12:42.75,Default,,0,0,0,,[Hình như đã vượt qua\Nsức tưởng tượng của mình,]
Dialogue: 0,0:12:42.78,0:12:46.02,Default,,0,0,0,,[cậu ấy càng lúc càng mạnh.]
Dialogue: 0,0:12:46.35,0:12:49.25,Default,,0,0,0,,Sakuragi Hanamichi, cậu làm tốt lắm!
Dialogue: 0,0:12:51.98,0:12:53.95,Default,,0,0,0,,Mặc dù lại bị cho là phạm lỗi,\Nnhưng không sao cả.
Dialogue: 0,0:12:54.10,0:12:56.43,Default,,0,0,0,,Cảm giác cú úp rổ vừa nãy thế nào?
Dialogue: 0,0:12:56.75,0:13:01.05,Default,,0,0,0,,Ayako, vì... vì em tập trung quá, nên không...
Dialogue: 0,0:13:01.18,0:13:03.45,Default,,0,0,0,,Sao lại như thế?
Dialogue: 0,0:13:04.03,0:13:05.16,Default,,0,0,0,,Không lẽ...
Dialogue: 0,0:13:07.99,0:13:10.04,Default,,0,0,0,,Đương nhiên rồi, em là thiên tài mà!
Dialogue: 0,0:13:11.82,0:13:13.78,Default,,0,0,0,,Đúng rồi, phải như thế mới đúng.
Dialogue: 0,0:13:15.78,0:13:17.31,Default,,0,0,0,,Làm tốt lắm, Sakuragi!
Dialogue: 0,0:13:17.35,0:13:18.38,Default,,0,0,0,,Dù có chút nuối tiếc.
Dialogue: 0,0:13:41.08,0:13:43.75,Default,,0,0,0,,[Mình nghe được nhịp tim của của mình.]
Dialogue: 0,0:13:46.27,0:13:51.19,Default,,0,0,0,,Shohoku, cố lên!
Dialogue: 0,0:13:51.22,0:13:54.24,Default,,0,0,0,,Được rồi, trận còn lại dựa vào chúng ta hết!
Dialogue: 0,0:13:54.40,0:13:55.26,Default,,0,0,0,,Cố lên!
Dialogue: 0,0:13:55.64,0:13:58.92,Default,,0,0,0,,Được rồi, còn 1 phút 50 giây nữa.
Dialogue: 0,0:13:59.97,0:14:00.83,Default,,0,0,0,,Tuyệt đối không thế thua.
Dialogue: 0,0:14:01.54,0:14:03.23,Default,,0,0,0,,Đổi người, Shohoku đổi người.
Dialogue: 0,0:14:03.81,0:14:06.60,Default,,0,0,0,,Kakuta, bình tĩnh, đừng căng thẳng!
Dialogue: 0,0:14:08.99,0:14:11.65,Default,,0,0,0,,Shoyo chúng ta\Nsao có thể thua người khác chứ?
Dialogue: 0,0:14:12.11,0:14:14.48,Default,,0,0,0,,Bây giờ đội Shoyo đang toàn lực phản công!
Dialogue: 0,0:14:18.57,0:14:19.90,Default,,0,0,0,,Tốt lắm, Ryota!
Dialogue: 0,0:14:19.98,0:14:20.81,Default,,0,0,0,,Tốt lắm!
Dialogue: 0,0:14:25.73,0:14:26.53,Default,,0,0,0,,Thật khó!
Dialogue: 0,0:14:30.68,0:14:32.29,Default,,0,0,0,,Mọi người phòng thủ, họ sắp qua rồi!
Dialogue: 0,0:14:32.40,0:14:33.43,Default,,0,0,0,,Mau phòng thủ!
Dialogue: 0,0:14:39.49,0:14:41.15,Default,,0,0,0,,Ném bóng ngay trên không!
Dialogue: 0,0:14:41.18,0:14:43.10,Default,,0,0,0,,Cú ném ba điểm này mà vào...
Dialogue: 0,0:14:43.13,0:14:44.47,Default,,0,0,0,,Là chuyển bại thành thắng.
Dialogue: 0,0:14:46.94,0:14:48.04,Default,,0,0,0,,Tôi còn nhiều sức lực,
Dialogue: 0,0:14:48.06,0:14:49.55,Default,,0,0,0,,để tôi chặn quả đó!
Dialogue: 0,0:14:55.44,0:14:56.30,Default,,0,0,0,,[Chạm được rồi!]
Dialogue: 0,0:14:58.12,0:14:59.11,Default,,0,0,0,,Vào đi!
Dialogue: 0,0:14:59.49,0:15:00.55,Default,,0,0,0,,Không được, không được vào!
Dialogue: 0,0:15:00.73,0:15:01.49,Default,,0,0,0,,Bắt bóng bật bảng!
Dialogue: 0,0:15:11.81,0:15:12.78,Default,,0,0,0,,Kakuta, hay lắm!
Dialogue: 0,0:15:15.30,0:15:17.50,Default,,0,0,0,,Kogura, cẩn thận đấy.
Dialogue: 0,0:15:18.64,0:15:19.86,Default,,0,0,0,,Chuyền bóng, mau lên!
Dialogue: 0,0:15:25.06,0:15:26.03,Default,,0,0,0,,Bắt bóng bật bảng!
Dialogue: 0,0:15:26.69,0:15:27.68,Default,,0,0,0,,Mau tiến lên!
Dialogue: 0,0:15:27.68,0:15:30.08,Default,,0,0,0,,Phòng thủ, nhất định phải phòng thủ quả này!
Dialogue: 0,0:15:30.34,0:15:31.94,Default,,0,0,0,,Không còn thời gian nữa,\Nnhất định phải ghi điểm!
Dialogue: 0,0:15:32.11,0:15:35.90,Default,,0,0,0,,Phòng thủ! Phòng thủ! Phòng thủ!
Dialogue: 0,0:15:35.93,0:15:41.88,Default,,0,0,0,,Phòng thủ! Phòng thủ! Phòng thủ!
Dialogue: 0,0:15:50.19,0:15:57.59,Default,,0,0,0,,Tấn công! Tấn công! Tấn công!
Dialogue: 0,0:16:00.68,0:16:01.38,Default,,0,0,0,,Mau vào!
Dialogue: 0,0:16:03.61,0:16:04.54,Default,,0,0,0,,Mọi người phòng thủ nào.
Dialogue: 0,0:16:04.61,0:16:05.17,Default,,0,0,0,,Rõ!
Dialogue: 0,0:16:19.76,0:16:21.35,Default,,0,0,0,,Sẽ không vào đâu!
Dialogue: 0,0:16:29.33,0:16:30.86,Default,,0,0,0,,Thắng rồi!
Dialogue: 0,0:16:30.88,0:16:32.98,Default,,0,0,0,,Shoyo thua rồi!
Dialogue: 0,0:16:34.81,0:16:39.61,Default,,0,0,0,,Tuyệt quá! Thắng rồi!
Dialogue: 0,0:16:42.45,0:16:44.92,Default,,0,0,0,,Chúng ta thắng rồi!
Dialogue: 0,0:16:45.01,0:16:47.55,Default,,0,0,0,,Tuyệt quá!
Dialogue: 0,0:16:47.69,0:16:50.18,Default,,0,0,0,,Tốt quá! Được vào chung kết rồi!
Dialogue: 0,0:16:50.20,0:16:54.37,Default,,0,0,0,,Thắng rồi! Thắng rồi! Thắng rồi!
Dialogue: 0,0:16:55.81,0:16:57.08,Default,,0,0,0,,Chúng ta thắng rồi!
Dialogue: 0,0:16:59.06,0:17:00.32,Default,,0,0,0,,Chúng ta thắng rồi!
Dialogue: 0,0:17:22.46,0:17:25.69,Default,,0,0,0,,[Nếu như ngay từ đầu Fujima\Nchỉ tập trung làm một cầu thủ thôi,]
Dialogue: 0,0:17:26.30,0:17:29.16,Default,,0,0,0,,[nếu Shoyo có một huấn luyện viên giỏi,]
Dialogue: 0,0:17:30.10,0:17:33.61,Default,,0,0,0,,[kết quả có lẽ sẽ không như vậy.]
Dialogue: 0,0:17:34.59,0:17:37.35,Default,,0,0,0,,Tỉ số 62-60, Shohoku giành chiến thắng!
Dialogue: 0,0:17:38.19,0:17:39.57,Default,,0,0,0,,Cảm ơn!
Dialogue: 0,0:17:49.85,0:17:52.08,Default,,0,0,0,,Thật sự cảm ơn các cậu!
Dialogue: 0,0:17:55.59,0:17:56.85,Default,,0,0,0,,[Fujima...]
Dialogue: 0,0:18:02.70,0:18:05.60,Default,,0,0,0,,[Thời đại của Fujima kết thúc tại đây.]
Dialogue: 0,0:18:05.93,0:18:09.82,Default,,0,0,0,,[Tỉnh Kanagawa\Nlại bắt đầu một trận chiến mới.]
Dialogue: 0,0:18:16.35,0:18:17.18,Default,,0,0,0,,Tốt lắm!
Dialogue: 0,0:18:17.20,0:18:19.99,Default,,0,0,0,,Hanamichi,\Ncho dù chỉ là may mắn trong phút chốc
Dialogue: 0,0:18:20.04,0:18:22.00,Default,,0,0,0,,nhưng mày cũng được xem là chơi rất tốt.
Dialogue: 0,0:18:25.11,0:18:25.63,Default,,0,0,0,,Sao vậy?
Dialogue: 0,0:18:25.65,0:18:26.36,Default,,0,0,0,,Làm gì vậy?
Dialogue: 0,0:18:26.52,0:18:28.45,Default,,0,0,0,,Xin lỗi, bây giờ cấm vào trong.
Dialogue: 0,0:18:52.76,0:18:59.23,Default,,0,0,0,,♫ Ánh mặt trời chói rọi phía sau lưng,\Ntôi bước trên con đường này ♫
Dialogue: 0,0:18:59.35,0:19:04.63,Default,,0,0,0,,♫ Cũng như thường lệ, lại bị vỗ vai ♫
Dialogue: 0,0:19:06.32,0:19:12.77,Default,,0,0,0,,♫ Cậu là nữ thần của tôi, không có lý do gì cả ♫
Dialogue: 0,0:19:12.77,0:19:18.08,Default,,0,0,0,,♫ Nhưng lại chưa từng khoác lấy tay tôi ♫
Dialogue: 0,0:19:18.34,0:19:24.47,Default,,0,0,0,,♫ Không biết từ lúc nào,\Nánh mắt đã không thể rời đi ♫
Dialogue: 0,0:19:24.87,0:19:30.73,Default,,0,0,0,,♫ Không buông ra, không do dự,\Nđiên cuồng vì cậu ♫
Dialogue: 0,0:19:31.32,0:19:38.44,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:19:38.44,0:19:44.80,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:19:44.80,0:19:52.31,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm tiến lên một bước ♫
Dialogue: 0,0:19:52.31,0:19:59.67,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:20:20.42,0:20:27.34,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:20:27.52,0:20:33.62,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:20:34.09,0:20:40.97,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm lên tiến lên một bước ♫
Dialogue: 0,0:20:41.29,0:20:48.22,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:20:50.85,0:20:54.38,Default,,0,0,0,,[Với tỉ số 62-60, Shohoku đã đánh bại Shoyo,]
Dialogue: 0,0:20:54.96,0:21:00.12,Default,,0,0,0,,[bước vào vòng chung kết của tỉnh.]
Dialogue: 0,0:21:08.57,0:21:15.84,Default,,0,0,0,,♫ Cô đơn lẻ bóng, chơi vơi nơi thành thị lớn ♫
Dialogue: 0,0:21:17.82,0:21:24.99,Default,,0,0,0,,♫ Như một chai bia rỗng bị người ta vứt đi ♫
Dialogue: 0,0:21:25.02,0:21:34.10,Default,,0,0,0,,♫ Nếu buộc phải tìm hiểu mọi thứ của nhau ♫
Dialogue: 0,0:21:34.20,0:21:36.98,Default,,0,0,0,,♫ Mới gọi là yêu ♫
Dialogue: 0,0:21:37.05,0:21:42.82,Default,,0,0,0,,♫ Thì chi bằng ngủ một giấc vĩnh hằng ♫
Dialogue: 0,0:21:42.94,0:21:47.07,Default,,0,0,0,,♫ Đến tận cùng của thế giới ♫
Dialogue: 0,0:21:47.39,0:21:52.42,Default,,0,0,0,,♫ Cũng không muốn xa cậu ♫
Dialogue: 0,0:21:52.74,0:22:00.64,Default,,0,0,0,,♫ Từng cầu nguyện\Ntrong biết bao nhiêu đêm tối ♫
Dialogue: 0,0:22:01.42,0:22:05.11,Default,,0,0,0,,♫ Rằng thời gian không trở lại ơi ♫
Dialogue: 0,0:22:06.04,0:22:10.27,Default,,0,0,0,,♫ Vì sao lại lóa mắt thế ♫
Dialogue: 0,0:22:11.09,0:22:19.74,Default,,0,0,0,,♫ Xát muối thêm vào trái tim ♫
Dialogue: 0,0:22:19.98,0:22:23.91,Default,,0,0,0,,♫ Vốn đã tiều tụy quá đỗi này ♫
Dialogue: 0,0:22:24.60,0:22:29.95,Default,,0,0,0,,♫ Nỗi nhớ mịt mờ trong đêm bi kịch này ♫
Dialogue: 0,0:22:36.12,0:22:37.42,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:39.49,0:22:40.37,Default,,0,0,0,,Haruko!
Dialogue: 0,0:22:40.66,0:22:42.87,Default,,0,0,0,,Biểu hiện hôm qua của mình,\Ncậu đã thấy rồi chứ?
Dialogue: 0,0:22:43.07,0:22:45.65,Default,,0,0,0,,Lần thi đấu tiếp theo\Nmình nhất định sẽ ghi điểm!
Dialogue: 0,0:22:45.68,0:22:48.39,Default,,0,0,0,,Đồ ngốc, trận tiếp theo là trận chung kết,
Dialogue: 0,0:22:48.72,0:22:51.57,Default,,0,0,0,,nếu cậu nghĩ có thể úp rổ dễ dàng\Nthì cậu sai quá rồi, Sakuragi!
Dialogue: 0,0:22:51.57,0:22:52.85,Default,,0,0,0,,Đáng ghét, Tinh Tinh Bự!
Dialogue: 0,0:22:52.87,0:22:55.09,Default,,0,0,0,,Anh đã xem tờ báo lúc sáng chưa?
Dialogue: 0,0:22:55.20,0:22:58.72,Default,,0,0,0,,Bất kể là ai, thiên tài này cũng sẽ\Nđưa đội bóng rổ giành lấy chiến thắng!
Dialogue: 0,0:22:59.42,0:23:00.35,Default,,0,0,0,,"Cao thủ bóng rổ!"
Dialogue: 0,0:23:00.77,0:23:02.57,Default,,0,0,0,,"Thư khiêu chiến của đối thủ."
Dialogue: 0,0:23:02.87,0:23:04.87,Default,,0,0,0,,Đừng bỏ qua đấy.
