Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:04.20,0:00:10.91,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:29.03,0:00:35.59,Default,,0,0,0,,♫ Ánh mặt trời chói rọi phía sau lưng,\Ntôi bước trên con đường này ♫
Dialogue: 0,0:00:35.83,0:00:41.93,Default,,0,0,0,,♫ Cũng như thường lệ, lại bị vỗ vai ♫
Dialogue: 0,0:00:42.67,0:00:49.01,Default,,0,0,0,,♫ Cậu là nữ thần của tôi, không có lý do gì cả ♫
Dialogue: 0,0:00:49.30,0:00:54.50,Default,,0,0,0,,♫ Nhưng lại chưa từng khoác lấy tay tôi ♫
Dialogue: 0,0:00:54.78,0:01:01.05,Default,,0,0,0,,♫ Không biết từ lúc nào,\Nánh mắt đã không thể rời đi ♫
Dialogue: 0,0:01:01.46,0:01:07.56,Default,,0,0,0,,♫ Không buông ra, không do dự,\Nđiên cuồng vì cậu ♫
Dialogue: 0,0:01:07.96,0:01:14.84,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:01:15.07,0:01:21.41,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:01:21.61,0:01:28.71,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm tiến lên một bước ♫
Dialogue: 0,0:01:28.92,0:01:36.35,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:01:45.53,0:01:49.02,Default,,0,0,0,,[Trong bảng đấu của tuần chung kết\Ncuộc thi các trường cấp ba trên toàn quốc,]
Dialogue: 0,0:01:50.12,0:01:54.74,Default,,0,0,0,,[với đội vô địch giữ vững suốt 16 năm\Ntrong cuộc thi đấu các trường cấp ba,]
Dialogue: 0,0:01:54.76,0:01:58.71,Default,,0,0,0,,[cuộc thi giữa trường cấp ba trực thuộc Đại\Nhọc Kainan và Shohoku chính thức bắt đầu.]
Dialogue: 0,0:02:00.67,0:02:02.96,Default,,0,0,0,,[Giữa sự phòng thủ và\Ntấn công gay cấn của hai trường,]
Dialogue: 0,0:02:03.10,0:02:04.69,Default,,0,0,0,,[đội ghi điểm đầu tiên là...]
Dialogue: 0,0:02:05.08,0:02:06.87,Default,,0,0,0,,Ngây thơ quá, Khỉ Hoang!
Dialogue: 0,0:02:08.39,0:02:09.66,Default,,0,0,0,,Tiếp chiêu đi!
Dialogue: 0,0:02:09.80,0:02:10.93,Default,,0,0,0,,Tuyệt chiêu của Tinh Tinh Bự!
Dialogue: 0,0:02:10.95,0:02:13.60,Default,,0,0,0,,Tuyệt chiêu đập ruồi!
Dialogue: 0,0:02:17.69,0:02:20.88,Default,,0,0,0,,[Cũng trong bảng thi đấu này,\Ntrong cuộc thi đấu của Ryonan và Takesato,]
Dialogue: 0,0:02:20.90,0:02:24.41,Default,,0,0,0,,[Ryonan đã thể hiện đúng thực lực của họ,\Ntoàn lực tấn công đánh bại đối thủ.]
Dialogue: 0,0:02:26.86,0:02:27.53,Default,,0,0,0,,[Mặt khác,]
Dialogue: 0,0:02:27.53,0:02:30.95,Default,,0,0,0,,[kỹ thuật đánh bóng hoàn hảo\Ncủa Akagi khiến Kainan không thể]
Dialogue: 0,0:02:31.10,0:02:32.93,Default,,0,0,0,,[vượt qua bốn điểm mà mình\Nđã dẫn trước Shohoku.]
Dialogue: 0,0:02:33.58,0:02:35.98,Default,,0,0,0,,[Hanamichi vô cùng hăng hái,\Nliên tục giành bóng thành công,]
Dialogue: 0,0:02:36.45,0:02:39.01,Default,,0,0,0,,[hơn nữa sau khi Nobunaga thay thế cho Maki,]
Dialogue: 0,0:02:39.03,0:02:41.47,Default,,0,0,0,,[Hanamichi đã sử dụng động tác giả của Ryota,]
Dialogue: 0,0:02:41.73,0:02:43.93,Default,,0,0,0,,[thuận lợi ghi điểm cho đội Shohoku.]
Dialogue: 0,0:02:59.63,0:03:02.16,Default,,0,0,0,,Phải nghĩ cách khiến cậu ta rời sân mới được.
Dialogue: 0,0:03:04.83,0:03:06.70,Default,,0,0,0,,Kainan yêu cầu tạm ngưng.
Dialogue: 0,0:03:09.44,0:03:17.76,Default,,0,0,0,,[Vũ khi bí mật khống chế Sakuragi!]
Dialogue: 0,0:03:11.67,0:03:14.49,Default,,0,0,0,,[Vũ khi bí mật khống chế Sakuragi!]
Dialogue: 0,0:03:21.95,0:03:23.38,Default,,0,0,0,,Sakuragi, động tác giả của cậu quá đẹp!
Dialogue: 0,0:03:24.73,0:03:25.75,Default,,0,0,0,,Đương nhiên rồi!
Dialogue: 0,0:03:26.63,0:03:30.30,Default,,0,0,0,,Sakuragi, lúc tập luyện chưa từng\Nthấy cậu dùng động tác giả...
Dialogue: 0,0:03:30.46,0:03:33.47,Default,,0,0,0,,Anh Bốn Mắt, bây giờ hãy gọi em\Nlà Sukuragi lợi hại nhất đi!
Dialogue: 0,0:03:34.42,0:03:37.91,Default,,0,0,0,,Chết tiệt! Chết tiệt! Tức chết tôi rồi!
Dialogue: 0,0:03:38.22,0:03:41.52,Default,,0,0,0,,Tức chết tôi rồi! Bị gạt bởi thằng khốn đó!
Dialogue: 0,0:03:45.02,0:03:47.39,Default,,0,0,0,,Trời ơi! Tức chết mất!
Dialogue: 0,0:03:47.39,0:03:49.69,Default,,0,0,0,,Maki, cậu thấy Shohoku thế nào?
Dialogue: 0,0:03:50.06,0:03:52.46,Default,,0,0,0,,Không hổ là đội đã đánh bại Shoyo.
Dialogue: 0,0:03:52.99,0:03:55.26,Default,,0,0,0,,Năm người đó vô cùng giỏi,
Dialogue: 0,0:03:55.48,0:03:56.71,Default,,0,0,0,,đặc biệt là lúc ở dưới khung rổ.
Dialogue: 0,0:03:57.92,0:03:59.12,Default,,0,0,0,,Được rồi.
Dialogue: 0,0:04:00.76,0:04:02.95,Default,,0,0,0,,Phải đuổi Sakuragi ra khỏi sân.
Dialogue: 0,0:04:03.25,0:04:04.41,Default,,0,0,0,,Miyamasu!
Dialogue: 0,0:04:07.20,0:04:08.17,Default,,0,0,0,,Vâng.
Dialogue: 0,0:04:09.66,0:04:11.59,Default,,0,0,0,,Cậu và Jin đổi vị trí với nhau.
Dialogue: 0,0:04:12.87,0:04:14.93,Default,,0,0,0,,Cậu sẽ là người kèm Sakuragi.
Dialogue: 0,0:04:15.38,0:04:16.49,Default,,0,0,0,,[Miyamasu Yoshinori,]
Dialogue: 0,0:04:16.76,0:04:18.74,Default,,0,0,0,,[học sinh lớp 12 trường cấp ba\Ntrực thuộc Đại học Kainan,]
Dialogue: 0,0:04:19.77,0:04:21.91,Default,,0,0,0,,[chiều cao 160cm, nặng 42kg,]
Dialogue: 0,0:04:22.50,0:04:24.23,Default,,0,0,0,,[không hề có kinh nghiệm thi đấu.]
Dialogue: 0,0:04:24.79,0:04:26.61,Default,,0,0,0,,[Trông có vẻ hơi yếu!]
Dialogue: 0,0:04:28.34,0:04:30.25,Default,,0,0,0,,[Đội bóng rổ trường cấp ba trực thuộc Kainan]
Dialogue: 0,0:04:30.42,0:04:33.61,Default,,0,0,0,,[nổi tiếng về mặt số lượng lẫn chất lượng.]
Dialogue: 0,0:04:34.66,0:04:37.63,Default,,0,0,0,,[Vào mùa xuân mỗi năm, các cầu thủ ưu tú\Ntừ các trường cấp hai khác nhau]
Dialogue: 0,0:04:37.63,0:04:40.33,Default,,0,0,0,,[đều cùng hướng về ngôi trường\Ndanh tiếng Kainan trong giới bóng rổ này.]
Dialogue: 0,0:04:40.70,0:04:42.65,Default,,0,0,0,,[Trong đó hơn một nửa số lượng\Nđã từ bỏ trong học kỳ đầu tiên,]
Dialogue: 0,0:04:43.97,0:04:46.72,Default,,0,0,0,,[một tháng sau,\Nlại thêm một nửa số người rời khỏi.]
Dialogue: 0,0:04:47.92,0:04:52.40,Default,,0,0,0,,Kainan, cố lên!
Dialogue: 0,0:04:52.42,0:04:57.02,Default,,0,0,0,,Kainan, cố lên!
Dialogue: 0,0:04:57.35,0:04:59.67,Default,,0,0,0,,[Sau một năm luyện tập vất vả,\Nnhững người được giữ lại,]
Dialogue: 0,0:05:01.83,0:05:04.47,Default,,0,0,0,,[nghe nói còn chưa tới 20%.]
Dialogue: 0,0:05:05.12,0:05:08.00,Default,,0,0,0,,[Miyamasu chỉ là người mới vào,\Nnhưng cậu ấy đã được giữ lại.]
Dialogue: 0,0:05:08.30,0:05:10.77,Default,,0,0,0,,[Tất cả các thành viên đều có\Nsự tin tưởng sâu đậm với cậu ấy.]
Dialogue: 0,0:05:11.60,0:05:13.12,Default,,0,0,0,,Miya cậu phải cố lên đấy!
Dialogue: 0,0:05:13.14,0:05:15.53,Default,,0,0,0,,- Cậu phải ghi được một điểm đấy, Miya!\N- Cố gắng lên nào!
Dialogue: 0,0:05:15.82,0:05:19.74,Default,,0,0,0,,Miya, tên Sakuragi đó chẳng có gì đâu!
Dialogue: 0,0:05:21.57,0:05:22.55,Default,,0,0,0,,Miya.
Dialogue: 0,0:05:23.65,0:05:26.05,Default,,0,0,0,,Cho mọi người cùng xem thành tựu\Nsuốt ba năm nay của cậu đi.
Dialogue: 0,0:05:26.05,0:05:27.21,Default,,0,0,0,,[Maki.]
Dialogue: 0,0:05:39.72,0:05:41.38,Default,,0,0,0,,[Thời khắc đến rồi.]
Dialogue: 0,0:05:41.56,0:05:44.83,Default,,0,0,0,,[Tôi nhất định sẽ thi đấu cố gắng hết sức!]
Dialogue: 0,0:05:46.74,0:05:48.54,Default,,0,0,0,,Được rồi, đi thôi!
Dialogue: 0,0:05:48.54,0:05:49.66,Default,,0,0,0,,Rõ!
Dialogue: 0,0:05:53.39,0:05:55.22,Default,,0,0,0,,Lên nào, Hanamichi!
Dialogue: 0,0:05:55.53,0:05:58.39,Default,,0,0,0,,Theo tao thấy, hôm nay mày\Nlà người có trạng thái tốt nhất đấy!
Dialogue: 0,0:05:58.73,0:06:02.98,Default,,0,0,0,,Đúng vậy, phân thắng thua với đội vô địch\Ntrường cấp ba trực thuộc đại học Kainan nào!
Dialogue: 0,0:06:03.30,0:06:05.79,Default,,0,0,0,,Đương nhiên rồi! Mau tung chiêu đi!
Dialogue: 0,0:06:20.72,0:06:22.98,Default,,0,0,0,,Cái tên kỳ lạ nhỏ con đó là ai thế?
Dialogue: 0,0:06:25.89,0:06:27.04,Default,,0,0,0,,Chuyện gì vậy?
Dialogue: 0,0:06:27.36,0:06:29.12,Default,,0,0,0,,Sao lại thay đổi một thành viên\Nquan trọng như Maki vậy?
Dialogue: 0,0:06:29.87,0:06:31.36,Default,,0,0,0,,Số 15, Miyamasu.
Dialogue: 0,0:06:31.89,0:06:34.34,Default,,0,0,0,,Anh ta là tuyển thủ giỏi thế sao?
Dialogue: 0,0:06:36.19,0:06:39.09,Default,,0,0,0,,Tóm lại thì đánh rồi mới tính sau.
Dialogue: 0,0:06:50.69,0:06:51.57,Default,,0,0,0,,Miyamasu!
Dialogue: 0,0:06:55.67,0:06:58.26,Default,,0,0,0,,[Gì vậy? Cậu ta chẳng có năng lực gì cả,]
Dialogue: 0,0:06:58.94,0:07:00.19,Default,,0,0,0,,[còn chạy chậm như thế.]
Dialogue: 0,0:07:01.45,0:07:02.26,Default,,0,0,0,,[Maki!]
Dialogue: 0,0:07:04.46,0:07:07.30,Default,,0,0,0,,[Chạy về nhanh thế sao?]
Dialogue: 0,0:07:10.72,0:07:11.57,Default,,0,0,0,,Xin lỗi.
Dialogue: 0,0:07:11.60,0:07:12.45,Default,,0,0,0,,Không sao.
Dialogue: 0,0:07:12.82,0:07:14.44,Default,,0,0,0,,Được rồi, phòng thủ nào.
Dialogue: 0,0:07:17.36,0:07:18.88,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:07:19.28,0:07:20.46,Default,,0,0,0,,Số 10, OK!
Dialogue: 0,0:07:24.57,0:07:28.26,Default,,0,0,0,,Gì vậy? Với chiều cao đó\Nmà muốn áp chế Hanamichi sao?
Dialogue: 0,0:07:28.51,0:07:30.82,Default,,0,0,0,,Giống như người lớn đang bắt nạt con nít vậy.
Dialogue: 0,0:07:39.52,0:07:40.34,Default,,0,0,0,,Cái này...
Dialogue: 0,0:07:40.37,0:07:41.89,Default,,0,0,0,,Phòng thủ box & one,
Dialogue: 0,0:07:42.16,0:07:45.90,Default,,0,0,0,,chỉ một người kèm người ném bóng\Nhoặc kèm người được chỉ định,
Dialogue: 0,0:07:46.10,0:07:49.09,Default,,0,0,0,,bốn người còn lại\Nphòng thủ ở bốn khu khác nhau.
Dialogue: 0,0:07:49.88,0:07:52.57,Default,,0,0,0,,Nhưng tôi không hiểu,\Ntại sao họ lại thay Maki đi?
Dialogue: 0,0:07:53.61,0:07:55.17,Default,,0,0,0,,Kainan chết tiệt!
Dialogue: 0,0:07:55.36,0:07:57.02,Default,,0,0,0,,Dám cho một tên tí hon này kèm tôi!
Dialogue: 0,0:07:57.45,0:07:59.75,Default,,0,0,0,,Đến tên đeo mắt kính của Shoyo\Nvà Thủ Lĩnh Người Vượn của Ryonan
Dialogue: 0,0:07:59.75,0:08:02.19,Default,,0,0,0,,gặp vua bóng bật bóng tôi đây còn phải sợ!
Dialogue: 0,0:08:02.19,0:08:04.81,Default,,0,0,0,,Ồn... ồn chết đi được, có ngon thì nhào vô!
Dialogue: 0,0:08:06.91,0:08:09.81,Default,,0,0,0,,Tốt lắm, Miya, tiếp tục, tiếp tục đi.
Dialogue: 0,0:08:09.94,0:08:13.18,Default,,0,0,0,,Có... có bản lĩnh giành được bóng trong tay tôi\Nthì cậu cứ giành đi.
Dialogue: 0,0:08:15.37,0:08:16.59,Default,,0,0,0,,Thế nào?
Dialogue: 0,0:08:17.62,0:08:19.74,Default,,0,0,0,,Anh không nói tôi cũng sẽ giành!
Dialogue: 0,0:08:24.56,0:08:27.08,Default,,0,0,0,,Tại sao anh ta không giành?
Dialogue: 0,0:08:27.42,0:08:28.67,Default,,0,0,0,,[Nghe kỹ đây, Miyamasu.]
Dialogue: 0,0:08:28.70,0:08:31.09,Default,,0,0,0,,[Em chỉ cần cố gắng khiêu khích Sakuragi đó,]
Dialogue: 0,0:08:31.69,0:08:34.45,Default,,0,0,0,,[không cần phải phí sức phòng thủ.]
Dialogue: 0,0:08:37.10,0:08:38.19,Default,,0,0,0,,Không ném vào được!
Dialogue: 0,0:08:38.21,0:08:40.48,Default,,0,0,0,,Quả vừa nãy không ai giành với cậu ta!
Dialogue: 0,0:08:46.79,0:08:48.75,Default,,0,0,0,,Lần này chắc chắn sẽ vào!
Dialogue: 0,0:08:54.70,0:08:56.89,Default,,0,0,0,,[Chết... chết rồi!]
Dialogue: 0,0:08:57.77,0:09:01.53,Default,,0,0,0,,Cậu số 10 đó làm gì vậy?\NNgoài việc phòng thủ còn biết gì nữa?
Dialogue: 0,0:09:01.95,0:09:07.00,Default,,0,0,0,,Tên khốn, anh có muốn chơi không hả?\NTừ đầu đến cuối chẳng động đậy gì cả!
Dialogue: 0,0:09:08.92,0:09:09.74,Default,,0,0,0,,Tôi muốn chơi!
Dialogue: 0,0:09:15.49,0:09:17.15,Default,,0,0,0,,Phải rồi.
Dialogue: 0,0:09:18.02,0:09:19.37,Default,,0,0,0,,Sao vậy Yohei?
Dialogue: 0,0:09:20.01,0:09:24.09,Default,,0,0,0,,Hanamichi là loại người gặp đối thủ\Ncàng mạnh thì càng không chịu thua,
Dialogue: 0,0:09:24.20,0:09:27.04,Default,,0,0,0,,là loại người chuyên trị đối thủ mạnh.
Dialogue: 0,0:09:27.57,0:09:31.06,Default,,0,0,0,,Trước đó nó không hề muốn thua\Ndưới tay Hanagata và Thủ Lĩnh Người Vượn,
Dialogue: 0,0:09:31.22,0:09:33.47,Default,,0,0,0,,nên mới dùng ý chí để áp đảo đối phương,\Nnhưng bây giờ đối thủ này...
Dialogue: 0,0:09:33.90,0:09:37.30,Default,,0,0,0,,Lúc đầu Sakuragi đấu với anh trai mình\Ncũng là bộ dạng như thế này.
Dialogue: 0,0:09:38.81,0:09:42.25,Default,,0,0,0,,Nếu đối thủ không mạnh, nó sẽ không thể\Nphát huy hết năng lực như thường ngày được.
Dialogue: 0,0:09:42.98,0:09:44.72,Default,,0,0,0,,Nó chính là loại người đấy.
Dialogue: 0,0:09:48.17,0:09:50.03,Default,,0,0,0,,Lại hụt rồi!
Dialogue: 0,0:09:50.53,0:09:54.34,Default,,0,0,0,,Cậu có biết đánh không vậy?\NChơi như dân ngoài ngành thế?
Dialogue: 0,0:09:55.23,0:09:59.06,Default,,0,0,0,,[Chỉ trong mười phút ngắn ngủi\Nđã nhìn rõ tính tình của Sakuragi!]
Dialogue: 0,0:09:59.50,0:10:01.97,Default,,0,0,0,,[Huấn luyện viên Takato thật đáng sợ!]
Dialogue: 0,0:10:04.71,0:10:06.00,Default,,0,0,0,,[Chết tiệt!]
Dialogue: 0,0:10:08.70,0:10:10.87,Default,,0,0,0,,Sắp lộ tẩy hết rồi.
Dialogue: 0,0:10:12.56,0:10:13.84,Default,,0,0,0,,Phòng thủ!
Dialogue: 0,0:10:17.40,0:10:19.96,Default,,0,0,0,,Không vào! Lại hụt rồi!
Dialogue: 0,0:10:21.27,0:10:22.35,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:10:22.60,0:10:24.36,Default,,0,0,0,,Đồ ngốc! Mau tấn công!
Dialogue: 0,0:10:25.94,0:10:27.17,Default,,0,0,0,,[Chết tiệt!]
Dialogue: 0,0:10:27.17,0:10:28.40,Default,,0,0,0,,Toi rồi.
Dialogue: 0,0:10:28.40,0:10:31.13,Default,,0,0,0,,Thời gian học bóng rổ của Sakuragi quá ngắn,
Dialogue: 0,0:10:31.13,0:10:34.23,Default,,0,0,0,,chúng ta vẫn chưa dạy cậu ấy làm sao ném bóng,
Dialogue: 0,0:10:35.12,0:10:38.11,Default,,0,0,0,,dù cho không ăn phòng thủ,\Ncậu ấy cũng không thể ném vào được.
Dialogue: 0,0:10:38.37,0:10:41.65,Default,,0,0,0,,Có người kèm cậu ấy sẽ tốt hơn.
Dialogue: 0,0:10:44.06,0:10:48.52,Default,,0,0,0,,[Đúng là huấn luyện viên Takato,\Nnhìn rõ hết mọi khuyết điểm của Sakuragi.]
Dialogue: 0,0:10:49.56,0:10:53.05,Default,,0,0,0,,[Không thể để bị lừa bởi sức bật cao\Nvà kỹ thuật cướp bóng của cậu ta,]
Dialogue: 0,0:10:53.52,0:10:57.23,Default,,0,0,0,,[bất kể năng lực thể thao tốt đến mấy thì cậu\Nta cũng chỉ vừa học bóng rổ chưa tới ba tháng.]
Dialogue: 0,0:10:58.75,0:11:00.20,Default,,0,0,0,,[Hoàn toàn là một người ngoài ngành!]
Dialogue: 0,0:11:01.91,0:11:03.09,Default,,0,0,0,,Ghi điểm rồi!
Dialogue: 0,0:11:04.19,0:11:08.06,Default,,0,0,0,,Tấn công thành công! Kainan đúng là lợi hại,\Nbắt đầu kéo xa khoảng cách rồi!
Dialogue: 0,0:11:08.47,0:11:10.53,Default,,0,0,0,,Shohoku bắt đầu khó khăn rồi đây!
Dialogue: 0,0:11:37.51,0:11:39.43,Default,,0,0,0,,Mạnh mẽ lên!
Dialogue: 0,0:11:40.34,0:11:42.44,Default,,0,0,0,,Sakuragi, đừng để bị người khác xem thường.
Dialogue: 0,0:11:45.09,0:11:47.39,Default,,0,0,0,,Nào! Mau giành lại điểm đã mất!
Dialogue: 0,0:11:47.42,0:11:50.40,Default,,0,0,0,,Shohoku, các người bị sao vậy?\NLuôn bị người ta đè đầu cưỡi cổ thế?
Dialogue: 0,0:11:51.08,0:11:53.24,Default,,0,0,0,,Mặc kệ tên số 15 đó,
Dialogue: 0,0:11:54.06,0:11:55.88,Default,,0,0,0,,chỉ cần chuyển sự tập trung\Nsang bốn người còn lại là được.
Dialogue: 0,0:11:56.53,0:11:57.70,Default,,0,0,0,,Bây giờ Jin đang ở ngoài sân,
Dialogue: 0,0:11:57.72,0:12:00.03,Default,,0,0,0,,chúng ta mà còn tiếp tục thua nữa là mất vui.
Dialogue: 0,0:12:01.14,0:12:04.13,Default,,0,0,0,,Nếu cậu số 10 ở Shohoku\Nkhông ném hụt nhiều quả như vậy,
Dialogue: 0,0:12:04.30,0:12:06.23,Default,,0,0,0,,tôi nghĩ chắc sẽ có phần thắng.
Dialogue: 0,0:12:06.26,0:12:10.38,Default,,0,0,0,,Cậu đầu đỏ của Shohoku chỉ thích ra vẻ thôi.
Dialogue: 0,0:12:14.30,0:12:17.13,Default,,0,0,0,,Hai người nói thêm lần nữa xem!
Dialogue: 0,0:12:18.23,0:12:19.84,Default,,0,0,0,,Takamiya, mày đừng như thế.
Dialogue: 0,0:12:21.52,0:12:22.90,Default,,0,0,0,,Khốn khiếp!
Dialogue: 0,0:12:23.83,0:12:26.10,Default,,0,0,0,,[Mày mau nghĩ cách đi, Hanamichi!]
Dialogue: 0,0:12:27.13,0:12:28.32,Default,,0,0,0,,Tinh Tinh Bự!
Dialogue: 0,0:12:29.30,0:12:30.30,Default,,0,0,0,,Gì vậy?
Dialogue: 0,0:12:36.16,0:12:38.73,Default,,0,0,0,,Làm sao mới ném vào được?
Dialogue: 0,0:12:40.32,0:12:42.84,Default,,0,0,0,,Nếu như em có thể ném vào...
Dialogue: 0,0:12:45.24,0:12:47.08,Default,,0,0,0,,Maki!
Dialogue: 0,0:12:49.95,0:12:51.83,Default,,0,0,0,,Sakuragi, phòng thủ đi!
Dialogue: 0,0:12:52.85,0:12:54.78,Default,,0,0,0,,[Nếu có thể nói cho cậu biết\Ncách có thể ném vào]
Dialogue: 0,0:12:55.25,0:12:56.65,Default,,0,0,0,,[thì tôi đã nói từ sớm rồi.]
Dialogue: 0,0:12:56.83,0:12:59.06,Default,,0,0,0,,Mặc kệ số 15 đi, canh chừng Maki!
Dialogue: 0,0:12:59.80,0:13:01.03,Default,,0,0,0,,Miya, mau ném bóng!
Dialogue: 0,0:13:13.53,0:13:15.63,Default,,0,0,0,,[Miya, họ đã xem thường cậu rồi.]
Dialogue: 0,0:13:19.55,0:13:20.63,Default,,0,0,0,,Tốt!
Dialogue: 0,0:13:25.18,0:13:26.92,Default,,0,0,0,,Ném giỏi lắm, Miya!
Dialogue: 0,0:13:26.94,0:13:28.23,Default,,0,0,0,,Miya! Giỏi lắm!
Dialogue: 0,0:13:28.94,0:13:32.88,Default,,0,0,0,,Miya, tiếp tục phát huy nào!
Dialogue: 0,0:13:34.96,0:13:38.15,Default,,0,0,0,,Miya cũng là tay ném đắc lực của\Ntrường cấp ba trực thuộc đại học Kainan đấy.
Dialogue: 0,0:13:38.53,0:13:42.92,Default,,0,0,0,,Kỹ thuật ném bóng của cậu ấy\Nđứng đầu trong Kainan đấy.
Dialogue: 0,0:13:44.87,0:13:47.75,Default,,0,0,0,,Nhờ vào sự cố gắng của cậu ấy.
Dialogue: 0,0:13:48.07,0:13:51.65,Default,,0,0,0,,Miyamasu, cố lên! Miyamsu!
Dialogue: 0,0:13:52.65,0:13:54.05,Default,,0,0,0,,Đến nào! Sakuragi!
Dialogue: 0,0:13:55.43,0:13:58.30,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:13:58.68,0:14:00.78,Default,,0,0,0,,Tinh thần chiến đấu của Miya sục sôi rồi!
Dialogue: 0,0:14:01.82,0:14:07.87,Default,,0,0,0,,Tinh Tinh Bự, mau chỉ em đi!\NMau chỉ em bí quyết đi, nhanh lên!
Dialogue: 0,0:14:08.13,0:14:11.22,Default,,0,0,0,,Nhanh lên! Nếu không ngăn anh ta\Nngay bây giờ thì sẽ càng thua nhiều đấy!
Dialogue: 0,0:14:11.30,0:14:13.18,Default,,0,0,0,,Đến lúc đó sẽ không kéo điểm lại được nữa!
Dialogue: 0,0:14:13.46,0:14:15.43,Default,,0,0,0,,Sẽ thua đấy!
Dialogue: 0,0:14:19.81,0:14:21.53,Default,,0,0,0,,[Đúng rồi.]
Dialogue: 0,0:14:22.61,0:14:25.62,Default,,0,0,0,,[Điều kiện cơ thể của thằng nhóc này\Nngang bằng vói Kainan,]
Dialogue: 0,0:14:26.39,0:14:27.44,Default,,0,0,0,,[nhưng mà...]
Dialogue: 0,0:14:30.30,0:14:31.24,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:14:32.24,0:14:34.72,Default,,0,0,0,,Muốn học được cách ném bóng vào rổ
Dialogue: 0,0:14:34.74,0:14:37.39,Default,,0,0,0,,ngay trong trận đấu là không thể nào.
Dialogue: 0,0:14:37.52,0:14:38.62,Default,,0,0,0,,Gì cơ?
Dialogue: 0,0:14:41.92,0:14:44.36,Default,,0,0,0,,Khi đứng dưới rổ chỉ được có một ý nghĩ thôi,\Nchính là úp rổ.
Dialogue: 0,0:14:49.95,0:14:51.12,Default,,0,0,0,,Được sao?
Dialogue: 0,0:14:52.82,0:14:56.25,Default,,0,0,0,,[Tỉ lệ thành công của cách này là cao nhất.]
Dialogue: 0,0:14:57.24,0:14:59.21,Default,,0,0,0,,Được rồi, mau phòng thủ đi!
Dialogue: 0,0:14:59.62,0:15:00.13,Default,,0,0,0,,Rõ!
Dialogue: 0,0:15:01.11,0:15:03.54,Default,,0,0,0,,Đội hình phòng thủ trong\Nkhu vực của Kainan rất mạnh.
Dialogue: 0,0:15:03.75,0:15:06.00,Default,,0,0,0,,Từ Maki, Kiyota, Muto, Takasago,
Dialogue: 0,0:15:06.03,0:15:09.33,Default,,0,0,0,,muốn bốn người này ném được bóng\Nlà chuyện không thể nào.
Dialogue: 0,0:15:09.33,0:15:10.88,Default,,0,0,0,,Vậy sao?
Dialogue: 0,0:15:10.88,0:15:11.80,Default,,0,0,0,,Ờ...
Dialogue: 0,0:15:12.95,0:15:14.72,Default,,0,0,0,,Ờ gì mà ờ?
Dialogue: 0,0:15:15.17,0:15:18.67,Default,,0,0,0,,Xem ra phải nhờ vào Sakuragi vì cậu ấy có thể\Ngiành bóng dễ dàng và úp rổ để ghi điểm.
Dialogue: 0,0:15:19.92,0:15:21.04,Default,,0,0,0,,Bóng lại rơi vào tay cậu ta rồi!
Dialogue: 0,0:15:22.00,0:15:25.37,Default,,0,0,0,,[Nếu mình có thể ghi điểm\Nthì sẽ không bị thua nhiều điểm như thế.]
Dialogue: 0,0:15:26.22,0:15:27.88,Default,,0,0,0,,[Mình nhất định phải ghi điểm!]
Dialogue: 0,0:15:28.01,0:15:30.83,Default,,0,0,0,,Đừng ném nữa,\Ndù gì cậu cũng không ném được đâu!
Dialogue: 0,0:15:32.56,0:15:33.98,Default,,0,0,0,,Ném đi, Sakuragi!
Dialogue: 0,0:15:34.30,0:15:36.03,Default,,0,0,0,,Ồn chết đi được!
Dialogue: 0,0:15:45.23,0:15:49.07,Default,,0,0,0,,Tôi nhất định phải ném được vào rổ!\NNhìn tôi đây!
Dialogue: 0,0:15:58.24,0:16:02.14,Default,,0,0,0,,Áo trắng số 4 phạm lỗi, ném phạt!
Dialogue: 0,0:16:05.18,0:16:06.21,Default,,0,0,0,,Ném phạt?
Dialogue: 0,0:16:08.30,0:16:09.53,Default,,0,0,0,,Maki!
Dialogue: 0,0:16:10.30,0:16:11.75,Default,,0,0,0,,Khốn kiếp!
Dialogue: 0,0:16:12.21,0:16:14.68,Default,,0,0,0,,Vừa nãy chắc chắn Maki cố tình phạm lỗi!
Dialogue: 0,0:16:15.65,0:16:18.85,Default,,0,0,0,,Cậu ta biết rõ kỹ năng ném bóng của\NSakuragi yếu, chắc chắn không ném vào được.
Dialogue: 0,0:16:23.91,0:16:25.86,Default,,0,0,0,,Sakuragi, thả lỏng hai vai.
Dialogue: 0,0:16:26.30,0:16:26.91,Default,,0,0,0,,Ừ.
Dialogue: 0,0:16:27.14,0:16:30.24,Default,,0,0,0,,Phải dùng sức ở đầu gối,\Nđừng dồn hết sức vào tay.
Dialogue: 0,0:16:32.60,0:16:33.55,Default,,0,0,0,,Miya!
Dialogue: 0,0:16:33.55,0:16:35.26,Default,,0,0,0,,Nếu Sakuragi muốn bật lên để ném bóng,
Dialogue: 0,0:16:35.28,0:16:37.72,Default,,0,0,0,,thì cứ làm theo lời của huấn luyện viên,\Nmặc kệ cậu ta.
Dialogue: 0,0:16:38.15,0:16:39.88,Default,,0,0,0,,Cậu ta chắc chắn không ném vào được.
Dialogue: 0,0:16:40.50,0:16:43.83,Default,,0,0,0,,Còn nữa, khi ở dưới khung rổ,\Ncậu ta nhất định sẽ dùng hết sức để úp rổ.
Dialogue: 0,0:16:44.66,0:16:47.01,Default,,0,0,0,,Tôi nghĩ đây chính là\Nchiến thuật Akagi chỉ cho cậu ta.
Dialogue: 0,0:16:47.33,0:16:48.20,Default,,0,0,0,,Úp rổ?
Dialogue: 0,0:16:48.20,0:16:51.73,Default,,0,0,0,,Lúc thấy cậu ta sắp úp rổ thì\Ncó phạm lỗi cũng phải ngăn cậu ta lại.
Dialogue: 0,0:16:52.88,0:16:56.28,Default,,0,0,0,,Vì khi ném phạt,\Ncậu ta chắc chắn không ném vào được.
Dialogue: 0,0:17:05.57,0:17:06.61,Default,,0,0,0,,Ném hụt!
Dialogue: 0,0:17:07.09,0:17:11.06,Default,,0,0,0,,Không được, hai quả không vào được quả nào,\Ncòn không chạm tới rổ!
Dialogue: 0,0:17:14.20,0:17:15.31,Default,,0,0,0,,Lúc ném phạt,
Dialogue: 0,0:17:15.76,0:17:17.93,Default,,0,0,0,,nếu bóng không chạm bảng hoặc không chạm rổ,
Dialogue: 0,0:17:18.20,0:17:21.30,Default,,0,0,0,,thì xem như là lỗi của người ném,\Nđội bạn sẽ được cộng một quả.
Dialogue: 0,0:17:23.19,0:17:25.11,Default,,0,0,0,,Nhục mặt lắm đấy!
Dialogue: 0,0:17:25.75,0:17:29.43,Default,,0,0,0,,Khốn... khốn kiếp!
Dialogue: 0,0:17:29.90,0:17:32.59,Default,,0,0,0,,Tên trung niên đó\Nchắc chắn cố tình đụng mình!
Dialogue: 0,0:17:36.53,0:17:38.00,Default,,0,0,0,,Là bóng của Kainan!
Dialogue: 0,0:17:39.28,0:17:43.28,Default,,0,0,0,,Bầu không khí càng lúc càng tệ,\Nđã lâu lắm rồi không giành được bóng.
Dialogue: 0,0:17:43.50,0:17:44.50,Default,,0,0,0,,Không biết từ bao giờ,
Dialogue: 0,0:17:44.61,0:17:47.60,Default,,0,0,0,,Sakuragi hoàn toàn bị dắt mũi\Nbởi đội đối thủ.
Dialogue: 0,0:17:51.74,0:17:53.57,Default,,0,0,0,,[Cậu ta chắc còn rất nhiều khuyết điểm.]
Dialogue: 0,0:17:54.47,0:17:56.69,Default,,0,0,0,,[Tôi nhất định sẽ moi ra hết, Sakuragi!]
Dialogue: 0,0:17:58.45,0:18:02.51,Default,,0,0,0,,[Đến lúc đó,\Ncậu không thể ở lại trên sân bóng nữa.]
Dialogue: 0,0:18:03.99,0:18:04.94,Default,,0,0,0,,Là số 15!
Dialogue: 0,0:18:07.72,0:18:08.79,Default,,0,0,0,,Vào rồi!
Dialogue: 0,0:18:10.77,0:18:13.36,Default,,0,0,0,,Số 15 đó ném bóng chính xác hơn\Nchúng ta tưởng đấy.
Dialogue: 0,0:18:14.04,0:18:16.92,Default,,0,0,0,,- Đúng vậy.\N- Phải để ý anh ta mới được.
Dialogue: 0,0:18:16.92,0:18:19.53,Default,,0,0,0,,Cách nhau tận 15 điểm,\Nđúng là giống với lúc trước.
Dialogue: 0,0:18:19.62,0:18:22.04,Default,,0,0,0,,Năm nay chưa có đội nào\Nđánh thắng Kainan sao?
Dialogue: 0,0:18:38.46,0:18:41.32,Default,,0,0,0,,Shohoku yêu cầu tạm dừng!
Dialogue: 0,0:18:43.99,0:18:45.32,Default,,0,0,0,,Huấn luyện viên Anzai.
Dialogue: 0,0:18:47.09,0:18:49.89,Default,,0,0,0,,Gì vậy? Đợi đã, Bố Già!
Dialogue: 0,0:18:50.90,0:18:52.37,Default,,0,0,0,,Đừng nhiều lời nữa!
Dialogue: 0,0:18:52.58,0:18:56.04,Default,,0,0,0,,Rời sân đi, đề phòng em lộ hết mọi điểm yếu.
Dialogue: 0,0:18:57.47,0:18:59.72,Default,,0,0,0,,Một thiên tài như em làm sao có điểm yếu được?
Dialogue: 0,0:18:59.74,0:19:01.99,Default,,0,0,0,,Bố Già, thầy suy nghĩ lại đi!
Dialogue: 0,0:19:02.98,0:19:04.67,Default,,0,0,0,,Được rồi, dốc toàn sức lực nào!
Dialogue: 0,0:19:05.22,0:19:07.95,Default,,0,0,0,,Miyagi! Anh Bốn Mắt!
Dialogue: 0,0:19:12.72,0:19:14.70,Default,,0,0,0,,Được rồi, chơi nào.
Dialogue: 0,0:19:14.88,0:19:18.65,Default,,0,0,0,,Các người đợi đã! Tôi còn chơi được mà,\Ntôi không muốn bị đổi!
Dialogue: 0,0:19:21.40,0:19:23.10,Default,,0,0,0,,Được rồi, tao đi đây.
Dialogue: 0,0:19:23.13,0:19:26.90,Default,,0,0,0,,Ngoan ngoãn mà nhìn đi, đồ ngốc!
Dialogue: 0,0:19:28.24,0:19:29.45,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:19:30.93,0:19:32.83,Default,,0,0,0,,Shohoku cho Sakuragi rời sân rồi!
Dialogue: 0,0:19:33.63,0:19:35.18,Default,,0,0,0,,[Giấu cậu ta đi sao?]
Dialogue: 0,0:19:37.70,0:19:39.43,Default,,0,0,0,,Kainan cũng đổi người!
Dialogue: 0,0:19:40.44,0:19:42.84,Default,,0,0,0,,- Làm tốt lắm, Miya!\N- Làm tốt lắm!
Dialogue: 0,0:19:47.75,0:19:49.54,Default,,0,0,0,,[Chết tiệt! Rukawa!]
Dialogue: 0,0:19:50.20,0:19:54.10,Default,,0,0,0,,[Tao chống mắt lên xem\Nmày giỏi hơn tao điểm nào!]
Dialogue: 0,0:19:54.60,0:20:00.51,Default,,0,0,0,,Phòng thủ! Phòng thủ! Phòng thủ! Phòng thủ!
Dialogue: 0,0:20:01.83,0:20:03.13,Default,,0,0,0,,[Một chọi một.]
Dialogue: 0,0:20:04.65,0:20:08.02,Default,,0,0,0,,Cuối cùng tôi cũng đợi được\Nđến lúc phân thắng thua với cậu rồi, Rukawa!
Dialogue: 0,0:20:13.28,0:20:15.21,Default,,0,0,0,,Tốt, thắng từng điểm một nào!
Dialogue: 0,0:20:15.45,0:20:17.54,Default,,0,0,0,,Đúng vậy, không thể để thua họ được!
Dialogue: 0,0:20:18.16,0:20:20.06,Default,,0,0,0,,Đừng tưởng ai cũng xem cậu là siêu sao\Nthì cậu nghĩ cậu giỏi.
Dialogue: 0,0:20:20.31,0:20:22.36,Default,,0,0,0,,Đó là bởi vì cậu ở trong Shohoku!
Dialogue: 0,0:20:22.80,0:20:25.36,Default,,0,0,0,,Nếu ở trong Kainan, muốn làm cầu thủ\Nchính thức cũng không có cửa!
Dialogue: 0,0:20:30.56,0:20:32.48,Default,,0,0,0,,Xem xem ai mới là siêu sao!
Dialogue: 0,0:20:37.35,0:20:40.45,Default,,0,0,0,,Tên nào tên nấy cũng nói nhiều!
Dialogue: 0,0:20:41.28,0:20:45.44,Default,,0,0,0,,[Huấn luyện viên Takato của trường cấp ba trực thuộc Kainan\Nđã nhìn thấu mọi điểm yếu của Sakuragi Hanamichi,]
Dialogue: 0,0:20:45.72,0:20:47.99,Default,,0,0,0,,[khiến cho Shohoku rơi vào nguy hiểm.]
Dialogue: 0,0:20:48.52,0:20:53.93,Default,,0,0,0,,[Nhưng lúc này đây, ý chí chiến đấu\Ncủa Rukawa cũng sục sôi theo.]
Dialogue: 0,0:21:12.59,0:21:15.39,Default,,0,0,0,,♫ Trong giấc mơ nhếch nhác thảm hại ♫
Dialogue: 0,0:21:16.30,0:21:18.74,Default,,0,0,0,,♫ Tôi bỗng choàng tỉnh ♫
Dialogue: 0,0:21:20.60,0:21:24.72,Default,,0,0,0,,♫ Lại một buổi sớm với ánh nắng rực rỡ ♫
Dialogue: 0,0:21:28.10,0:21:33.71,Default,,0,0,0,,♫ Nghe bài hát mình thích ♫
Dialogue: 0,0:21:35.75,0:21:40.92,Default,,0,0,0,,♫ Mặc chiếc áo sơ mi sạch sẽ ♫
Dialogue: 0,0:21:42.69,0:21:45.24,Default,,0,0,0,,♫ Đêm qua ♫
Dialogue: 0,0:21:45.63,0:21:48.64,Default,,0,0,0,,♫ Có người nói với tôi với vẻ mệt mỏi rằng ♫
Dialogue: 0,0:21:49.73,0:21:51.30,Default,,0,0,0,,♫ Muốn tìm kiếm kích thích ♫
Dialogue: 0,0:21:51.30,0:21:53.01,Default,,0,0,0,,♫ Muốn đột phá thực tại ♫
Dialogue: 0,0:21:53.25,0:21:56.38,Default,,0,0,0,,♫ Đừng lún sâu như thế nữa ♫
Dialogue: 0,0:21:57.37,0:22:01.31,Default,,0,0,0,,♫ Hãy nắm giữ khoảnh khắc tỏa sáng ♫
Dialogue: 0,0:22:01.31,0:22:04.74,Default,,0,0,0,,♫ Tôi phải sống đúng với bản thân mình ♫
Dialogue: 0,0:22:05.31,0:22:09.01,Default,,0,0,0,,♫ Có lẽ sẽ hối hận, có lẽ không hoàn hảo ♫
Dialogue: 0,0:22:09.41,0:22:13.34,Default,,0,0,0,,♫ Nhưng đã không còn cô đơn nữa wow ♫
Dialogue: 0,0:22:13.74,0:22:19.72,Default,,0,0,0,,♫ Giọt nước mắt tràn mi\Nlại là thứ đẹp đẽ nhất ♫
Dialogue: 0,0:22:20.59,0:22:24.41,Default,,0,0,0,,♫ Tôi lại bước lên hành trình vô tận ♫
Dialogue: 0,0:22:24.41,0:22:28.39,Default,,0,0,0,,♫ Đi thẳng về phía trước,\Nkhông bao giờ lùi bước ♫
Dialogue: 0,0:22:36.31,0:22:37.79,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:40.01,0:22:42.81,Default,,0,0,0,,Được rồi, chỉ cách nhau 15 điểm,\Nsẽ đuổi kịp thôi!
Dialogue: 0,0:22:42.92,0:22:45.55,Default,,0,0,0,,Sự cố chấp và niềm tin của Tinh Tinh Bự\Ntrong trận đấu này không ai so được.
Dialogue: 0,0:22:46.30,0:22:47.15,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:22:47.47,0:22:48.33,Default,,0,0,0,,Sao vậy?
Dialogue: 0,0:22:48.60,0:22:49.69,Default,,0,0,0,,Trong lúc này sao?
Dialogue: 0,0:22:49.88,0:22:52.86,Default,,0,0,0,,Trật chân rồi sao?\NChân anh sưng to kinh khủng!
Dialogue: 0,0:22:52.98,0:22:56.03,Default,,0,0,0,,Gãy xương cũng được, không đi được cũng được,
Dialogue: 0,0:22:56.50,0:22:58.80,Default,,0,0,0,,đây là cơ hội tôi khó mà có được.
Dialogue: 0,0:22:59.17,0:23:00.08,Default,,0,0,0,,"Cao thủ bóng rổ!"
Dialogue: 0,0:23:00.57,0:23:03.26,Default,,0,0,0,,"Tinh Tinh Bự bị chấn thương,\Nngàn cân treo sợi tóc."
Dialogue: 0,0:23:03.45,0:23:04.72,Default,,0,0,0,,Đừng bỏ qua đấy.
