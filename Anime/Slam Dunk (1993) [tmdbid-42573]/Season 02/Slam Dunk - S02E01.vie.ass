Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:04.54,0:00:11.23,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:29.02,0:00:35.49,Default,,0,0,0,,♫ Ánh mặt trời chói rọi phía sau lưng,\Ntôi bước trên con đường này ♫
Dialogue: 0,0:00:35.74,0:00:41.88,Default,,0,0,0,,♫ Cũng như thường lệ, lại bị vỗ vai ♫
Dialogue: 0,0:00:42.48,0:00:48.98,Default,,0,0,0,,♫ Cậu là nữ thần của tôi, không có lý do gì cả ♫
Dialogue: 0,0:00:49.04,0:00:54.48,Default,,0,0,0,,♫ Nhưng lại chưa từng khoác lấy tay tôi ♫
Dialogue: 0,0:00:54.56,0:01:01.12,Default,,0,0,0,,♫ Không biết từ lúc nào,\Nánh mắt đã không thể rời đi ♫
Dialogue: 0,0:01:01.26,0:01:07.84,Default,,0,0,0,,♫ Không buông ra, không do dự,\Nđiên cuồng vì cậu ♫
Dialogue: 0,0:01:07.86,0:01:14.78,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:01:14.88,0:01:21.34,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:01:21.36,0:01:28.58,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm tiến lên một bước ♫
Dialogue: 0,0:01:28.74,0:01:35.96,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:01:45.59,0:01:49.99,Default,,0,0,0,,[Dù Shohoku đã thua đội bóng rổ của Ryonan\Nvới sự dẫn dắt của con át chủ bài Sendoh,]
Dialogue: 0,0:01:50.11,0:01:54.42,Default,,0,0,0,,[nhưng sự trở lại của Miyagi Ryota đã khiến cho ý chí\Nchinh phục toàn quốc của cả đội bùng cháy thêm lần nữa.]
Dialogue: 0,0:01:55.09,0:01:59.19,Default,,0,0,0,,[Nhưng Shohoku\Nhiện đang gặp phải một nguy cơ lớn.]
Dialogue: 0,0:01:59.51,0:02:05.30,Default,,0,0,0,,[Mitsui đã dẫn một đám người xấu đến quậy phá\Ntrả thù Miyagi, với ý đồ ép đội bóng rổ giải tán.]
Dialogue: 0,0:02:06.59,0:02:08.71,Default,,0,0,0,,[Trong những mâu thuẫn này, ai cũng biết,]
Dialogue: 0,0:02:08.80,0:02:10.56,Default,,0,0,0,,[vốn dĩ Mitsui cũng nằm trong đội bóng rổ.]
Dialogue: 0,0:02:11.23,0:02:12.06,Default,,0,0,0,,[Thời cấp hai,]
Dialogue: 0,0:02:12.18,0:02:15.44,Default,,0,0,0,,[Mitsui đã xưng bá giải đấu toàn tỉnh,\Nlà tuyển thủ xuất sắc nhất,]
Dialogue: 0,0:02:15.56,0:02:19.47,Default,,0,0,0,,[Vừa vào đội bóng đã bị thương\Nkhi thi đấu gây gắt với Akagi.]
Dialogue: 0,0:02:19.58,0:02:23.86,Default,,0,0,0,,[Cậu thề sẽ thi đấu trở lại để cảm ơn\Ncông lao của huấn luyện viên Anzai.]
Dialogue: 0,0:02:26.26,0:02:32.49,Default,,0,0,0,,[Để báo ơn huấn luyện viên Anzai, tôi buộc\Nphải mau chóng xuất viện rồi trở lại đấu.]
Dialogue: 0,0:02:32.58,0:02:34.63,Default,,0,0,0,,Kogure, cậu chờ đấy.
Dialogue: 0,0:02:36.81,0:02:39.47,Default,,0,0,0,,Nếu lúc đó đã chữa lành được...
Dialogue: 0,0:02:41.69,0:02:49.82,Default,,0,0,0,,[Tôi muốn chơi bóng rổ!]
Dialogue: 0,0:02:43.64,0:02:46.13,Default,,0,0,0,,[Tôi muốn chơi bóng rổ!]
Dialogue: 0,0:02:57.79,0:03:01.48,Default,,0,0,0,,Tôi nhớ lúc đó sắp đến\Ntrận thi đấu của các trường cấp ba,
Dialogue: 0,0:03:01.65,0:03:05.64,Default,,0,0,0,,Mitsui đáng lẽ ra nên nằm trong bệnh viện\Nnhưng đột nhiên lại xuất hiện trên sân bóng.
Dialogue: 0,0:03:06.82,0:03:09.71,Default,,0,0,0,,Nhanh! Nhanh! Lên! Lên!
Dialogue: 0,0:03:09.81,0:03:11.47,Default,,0,0,0,,Nhanh lên!
Dialogue: 0,0:03:11.98,0:03:15.65,Default,,0,0,0,,- Ủa, Mitsui!\N- Đây không phải là Mitsui sao?
Dialogue: 0,0:03:15.99,0:03:20.04,Default,,0,0,0,,- Mitsui, cậu đã xuất viện sao?\N- Chắc cậu đã đi lại được rồi!
Dialogue: 0,0:03:20.15,0:03:20.91,Default,,0,0,0,,Đầu gối của cậu thế nào?
Dialogue: 0,0:03:21.01,0:03:24.83,Default,,0,0,0,,Cậu không sao chứ? Sao xuất viện nhanh vậy?\NHình như xuất viện sớm quá rồi đấy!
Dialogue: 0,0:03:26.15,0:03:30.35,Default,,0,0,0,,Cứ kêu tôi nằm mãi trên giường bệnh\Nthì cả người tôi sẽ nhũn ra mất!
Dialogue: 0,0:03:30.80,0:03:33.17,Default,,0,0,0,,- Mitsui!\N- Huấn luyện viên Anzai!
Dialogue: 0,0:03:33.30,0:03:34.60,Default,,0,0,0,,- Chào huấn luyện viên!\N- Chào huấn luyện viên!
Dialogue: 0,0:03:35.04,0:03:36.02,Default,,0,0,0,,Chào huấn luyện viên!
Dialogue: 0,0:03:36.47,0:03:38.44,Default,,0,0,0,,Mitsui, cậu xuất viện rồi sao?
Dialogue: 0,0:03:39.86,0:03:40.85,Default,,0,0,0,,Đúng là tốt quá!
Dialogue: 0,0:03:40.95,0:03:44.67,Default,,0,0,0,,Này, Mitsui, cậu có thể thi\Ntrận thi đấu của các trường cấp ba chứ?
Dialogue: 0,0:03:44.80,0:03:48.25,Default,,0,0,0,,- Sắp đến ngày thi đấu rồi đấy!\N- Tôi nhất định sẽ theo kịp!
Dialogue: 0,0:03:49.00,0:03:50.34,Default,,0,0,0,,Cậu tự tin thật đấy!
Dialogue: 0,0:03:50.50,0:03:54.82,Default,,0,0,0,,Akagi, tôi sẽ quyết đấu với cậu,\Nvẫn chưa phân thắng thua.
Dialogue: 0,0:03:54.91,0:03:56.46,Default,,0,0,0,,Tôi sẽ trở lại ngay cho cậu thấy!
Dialogue: 0,0:03:56.61,0:03:59.70,Default,,0,0,0,,Không lẽ cậu tưởng cậu đã thắng tôi hay sao?
Dialogue: 0,0:04:01.05,0:04:03.17,Default,,0,0,0,,Là tôi đã thắng, đồ ngốc.
Dialogue: 0,0:04:03.30,0:04:05.55,Default,,0,0,0,,- Đừng chậm chạp như thế!\N- Chơi tiếp đi!
Dialogue: 0,0:04:05.64,0:04:11.13,Default,,0,0,0,,Nào chuyền bóng, mau chuyền bóng nào!
Dialogue: 0,0:04:16.48,0:04:18.34,Default,,0,0,0,,Ơ, đâu mất rồi?
Dialogue: 0,0:04:18.75,0:04:22.55,Default,,0,0,0,,Bác sĩ, hôm qua học sinh Mitsui\Ncũng định trốn khỏi bệnh viện.
Dialogue: 0,0:04:22.68,0:04:24.73,Default,,0,0,0,,Thật là!\NVết thương của cậu ấy mới vừa bắt đầu lành.
Dialogue: 0,0:04:24.80,0:04:26.03,Default,,0,0,0,,Thật hết cách với cậu ấy!
Dialogue: 0,0:04:26.31,0:04:28.93,Default,,0,0,0,,Không lẽ cậu ấy chạy đi gặp bạn gái rồi sao?
Dialogue: 0,0:04:29.02,0:04:34.76,Default,,0,0,0,,Chắc là không đâu, vì xung quanh\Ncậu ấy chỉ có đội bóng rổ mà thôi.
Dialogue: 0,0:04:36.91,0:04:42.45,Default,,0,0,0,,Nghe nói từ lúc học cấp hai,\NMitsui đã là tuyển thủ ưu tú của đội bóng rổ.
Dialogue: 0,0:04:43.09,0:04:45.38,Default,,0,0,0,,Đúng vậy, nghe nói cậu ấy còn thề là
Dialogue: 0,0:04:45.46,0:04:47.24,Default,,0,0,0,,phải khiến cho đội bóng trường cấp ba\NShohoku giành được quán quân.
Dialogue: 0,0:04:47.34,0:04:51.72,Default,,0,0,0,,Tôi nhớ hình như cậu ấy còn nói là\Ntrận thi đấu giữa các trường cấp ba sắp bắt đầu.
Dialogue: 0,0:05:05.29,0:05:07.31,Default,,0,0,0,,Tốt, ném tốt lắm, Agaki!
Dialogue: 0,0:05:07.40,0:05:09.70,Default,,0,0,0,,Chỉ cần giống như lúc nãy,\Náp dụng kỹ thuật lúc xoay người,
Dialogue: 0,0:05:09.95,0:05:12.38,Default,,0,0,0,,- thì cậu sẽ không bị lỗi chạy bước.\N- Vâng!
Dialogue: 0,0:05:12.64,0:05:13.80,Default,,0,0,0,,Được, lại lần nữa nào!
Dialogue: 0,0:05:15.40,0:05:16.77,Default,,0,0,0,,Akagi, cậu không cần phải tránh né,
Dialogue: 0,0:05:16.87,0:05:19.94,Default,,0,0,0,,với thân hình của cậu,\Nkhông ai đẩy nổi cậu đâu.
Dialogue: 0,0:05:20.03,0:05:21.69,Default,,0,0,0,,[Ai né chứ?]
Dialogue: 0,0:05:23.63,0:05:25.61,Default,,0,0,0,,Tốt, tốt lắm!
Dialogue: 0,0:05:25.71,0:05:27.84,Default,,0,0,0,,Va mạnh như vậy là đúng rồi đấy!
Dialogue: 0,0:05:27.98,0:05:29.25,Default,,0,0,0,,Cậu không sao chứ?
Dialogue: 0,0:05:29.48,0:05:31.83,Default,,0,0,0,,Không... không sao... cậu mạnh thật đấy!
Dialogue: 0,0:05:36.79,0:05:39.61,Default,,0,0,0,,Được rồi, trận đấu sắp bắt đầu,\Nkhông được lơ là!
Dialogue: 0,0:05:39.70,0:05:40.63,Default,,0,0,0,,Rõ!
Dialogue: 0,0:05:42.01,0:05:44.37,Default,,0,0,0,,[Đáng ghét, mình sẽ không thua đâu!]
Dialogue: 0,0:05:46.75,0:05:48.55,Default,,0,0,0,,Cố lên! Nhanh lên! Nhanh lên!
Dialogue: 0,0:05:55.18,0:05:59.31,Default,,0,0,0,,Lâu ngày không đến sân bóng,\Ncảm giác được đổ mồ hôi thế nào?
Dialogue: 0,0:06:00.69,0:06:02.16,Default,,0,0,0,,Bác... bác sĩ!
Dialogue: 0,0:06:02.64,0:06:06.81,Default,,0,0,0,,- Bị tôi đoán đúng rồi đúng không?\N- Nhưng mà... đầu gối của cháu không sao rồi!
Dialogue: 0,0:06:06.91,0:06:09.92,Default,,0,0,0,,Cháu chỉ là khởi động cho nóng người thôi,\Nđợi đến khi luyện tập chính thức...
Dialogue: 0,0:06:10.00,0:06:12.26,Default,,0,0,0,,đến khi luyện tập chính thức\Nchắc sẽ không thành vấn đề.
Dialogue: 0,0:06:12.40,0:06:13.42,Default,,0,0,0,,Cậu đang nói khùng nói điên gì vậy?
Dialogue: 0,0:06:13.96,0:06:15.87,Default,,0,0,0,,Lỡ như xảy ra chuyện thì sao?
Dialogue: 0,0:06:16.73,0:06:20.65,Default,,0,0,0,,Tôi biết là rất khó để\Ncậu ngồi im để dưỡng thương,
Dialogue: 0,0:06:20.74,0:06:23.63,Default,,0,0,0,,nhưng bây giờ là lúc quan trọng nhất,
Dialogue: 0,0:06:23.75,0:06:25.19,Default,,0,0,0,,chỉ vì nhất thời nóng vội
Dialogue: 0,0:06:25.30,0:06:26.87,Default,,0,0,0,,mà khiến cho đầu gối không thể\Nhồi phục được nữa, cậu thấy vậy ổn sao?
Dialogue: 0,0:06:28.08,0:06:31.55,Default,,0,0,0,,Phải đợi khi hồi phục hoàn toàn\Nthì mới có thể chạy nhảy trên sân bóng được.
Dialogue: 0,0:06:32.43,0:06:36.71,Default,,0,0,0,,Chỉ cần cố gắng chờ đợi khoảng\Nmột tháng là được, được không, Mitsui?
Dialogue: 0,0:06:47.48,0:06:49.31,Default,,0,0,0,,[Cố đợi trong một tháng?]
Dialogue: 0,0:06:53.53,0:06:55.14,Default,,0,0,0,,[Vậy thì không kịp rồi.]
Dialogue: 0,0:06:55.23,0:06:56.63,Default,,0,0,0,,[Không thể tham gia trận đấu\Ncác trường cấp ba mất!]
Dialogue: 0,0:06:57.32,0:06:58.38,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:07:01.46,0:07:03.10,Default,,0,0,0,,[Bệnh viện tổng hợp Noguchi]
Dialogue: 0,0:07:05.60,0:07:07.02,Default,,0,0,0,,Mitsui!
Dialogue: 0,0:07:09.33,0:07:12.94,Default,,0,0,0,,Hôm nay cậu ngủ ngoan ngoãn thế?\NĐúng là cảm động quá!
Dialogue: 0,0:07:13.06,0:07:16.05,Default,,0,0,0,,Xem ra những lời bác sĩ khuyên\Nđã có tác dụng rồi.
Dialogue: 0,0:07:16.18,0:07:18.34,Default,,0,0,0,,Thật ra lúc cậu nghe lời mới giống một cậu bé.
Dialogue: 0,0:07:18.51,0:07:19.91,Default,,0,0,0,,Hơn nữa trông cũng đáng yêu!
Dialogue: 0,0:07:20.34,0:07:24.58,Default,,0,0,0,,Để chị đây thương yêu cậu nào, Mitsui!
Dialogue: 0,0:07:28.50,0:07:30.55,Default,,0,0,0,,Thằng nhóc này!
Dialogue: 0,0:07:46.68,0:07:49.93,Default,,0,0,0,,[Không đau, không đau chút nào! Làm được mà!]
Dialogue: 0,0:07:55.53,0:07:56.56,Default,,0,0,0,,Được rồi!
Dialogue: 0,0:07:57.32,0:08:00.43,Default,,0,0,0,,Ôi Mitsui, cậu đã hồi phục hoàn toàn rồi!
Dialogue: 0,0:08:00.54,0:08:02.89,Default,,0,0,0,,- Không thấy đau nữa sao?\N- Không sao!
Dialogue: 0,0:08:02.98,0:08:06.19,Default,,0,0,0,,Một tuần nữa là trận đấu bắt đầu,\Ncòn bận tâm đau hay không đau nữa chứ!
Dialogue: 0,0:08:06.28,0:08:07.84,Default,,0,0,0,,Mitsui, cậu đừng cố chịu đựng đấy..
Dialogue: 0,0:08:07.96,0:08:09.86,Default,,0,0,0,,Nếu thấy đau thì nghỉ ngơi đi.
Dialogue: 0,0:08:09.95,0:08:11.09,Default,,0,0,0,,Tôi nói là tôi không thấy đau.
Dialogue: 0,0:08:11.18,0:08:13.00,Default,,0,0,0,,Đối với tôi,\Nnghỉ ngơi sẽ càng khiến tôi đau đớn hơn!
Dialogue: 0,0:08:13.13,0:08:15.27,Default,,0,0,0,,Kogure, cậu nằm viện thử đi rồi sẽ biết thôi.
Dialogue: 0,0:08:15.75,0:08:19.00,Default,,0,0,0,,Ba ngày không chơi bóng bóng rổ\Nlà tôi ngứa hết mình mẩy.
Dialogue: 0,0:08:19.52,0:08:20.28,Default,,0,0,0,,Mitsui!
Dialogue: 0,0:08:20.81,0:08:23.18,Default,,0,0,0,,Tốt! Ngăn đối phương, mau phòng thủ đi!
Dialogue: 0,0:08:24.93,0:08:25.53,Default,,0,0,0,,Kogure!
Dialogue: 0,0:08:25.63,0:08:26.78,Default,,0,0,0,,[Akagi, cậu còn non lắm!]
Dialogue: 0,0:08:29.16,0:08:30.98,Default,,0,0,0,,Lợi hại! Đúng là Mitsui!
Dialogue: 0,0:08:34.45,0:08:36.21,Default,,0,0,0,,[Thế nào, Akagi, cậu đã thấy chưa?]
Dialogue: 0,0:08:49.36,0:08:50.03,Default,,0,0,0,,- Mitsui!\N- Mitsui!
Dialogue: 0,0:08:55.50,0:08:57.42,Default,,0,0,0,,- Mit... Mitsui!\N- Mitsui!
Dialogue: 0,0:09:05.95,0:09:07.70,Default,,0,0,0,,Bây giờ, chấn thương của cậu lành rồi chứ?
Dialogue: 0,0:09:12.92,0:09:17.86,Default,,0,0,0,,[Kết quả là Mitsui vẫn không thể tham gia\Nđược vòng đấu loại giữa các trường cấp ba.]
Dialogue: 0,0:09:27.23,0:09:30.59,Default,,0,0,0,,- Cậu kia to lớn quá!\N- Nghe nói số 10 là học sinh lớp 10 đấy.
Dialogue: 0,0:09:31.27,0:09:32.16,Default,,0,0,0,,Xin chỉ giáo!
Dialogue: 0,0:09:43.19,0:09:44.71,Default,,0,0,0,,Akagi, làm tốt lắm!
Dialogue: 0,0:09:48.92,0:09:52.16,Default,,0,0,0,,Akagi, ném tốt lắm, dẫn đầu một điểm!
Dialogue: 0,0:10:06.69,0:10:10.59,Default,,0,0,0,,- Đúng rồi, cố lên!\N- Cố lên, Shohoku!
Dialogue: 0,0:10:22.28,0:10:23.71,Default,,0,0,0,,[Từ đó trở đi,]
Dialogue: 0,0:10:23.86,0:10:28.09,Default,,0,0,0,,[Mitsui không quay lại nhà thi đấu nữa.]
Dialogue: 0,0:10:39.68,0:10:44.25,Default,,0,0,0,,- Mitsui!\N- Kogure, cậu lắm chuyện quá đấy.
Dialogue: 0,0:10:44.25,0:10:46.67,Default,,0,0,0,,Nhưng mà những gì tôi nói là sự thật, Mitsui!
Dialogue: 0,0:10:47.08,0:10:48.63,Default,,0,0,0,,Thì ra đã xảy ra nhiều chuyện như vậy.
Dialogue: 0,0:10:48.75,0:10:51.73,Default,,0,0,0,,Chúng ta đều không biết\NMitsui từng là thành viên đội bóng rổ.
Dialogue: 0,0:10:51.86,0:10:54.78,Default,,0,0,0,,Nếu không bị chấn thương  thì\Nbây giờ chắc chắc là tuyển thủ chủ lực đấy.
Dialogue: 0,0:10:54.91,0:10:57.82,Default,,0,0,0,,Không thể nào,\Nchỉ cần có Sakuragi tao đây là đủ rồi!
Dialogue: 0,0:10:57.91,0:10:59.24,Default,,0,0,0,,Mitsui!
Dialogue: 0,0:11:02.51,0:11:07.47,Default,,0,0,0,,Nguyên nhân khiến anh gây chuyện với\NMiyagi không phải chỉ vì thấy chướng mắt,
Dialogue: 0,0:11:07.85,0:11:10.29,Default,,0,0,0,,mà vì Miyagi là người mới\Nđược mong đợi nhất trong đội bóng rổ.
Dialogue: 0,0:11:10.67,0:11:13.14,Default,,0,0,0,,Bởi vì cậu ấy có thứ mà anh đã mất.
Dialogue: 0,0:11:15.43,0:11:16.36,Default,,0,0,0,,Mitsui.
Dialogue: 0,0:11:20.92,0:11:21.88,Default,,0,0,0,,Mitsui.
Dialogue: 0,0:11:23.16,0:11:27.17,Default,,0,0,0,,Thật ra trong lòng cậu,\Ncậu muốn quay lại đội bóng rổ đúng không?
Dialogue: 0,0:11:51.68,0:11:54.95,Default,,0,0,0,,Mitsui, thật ra trong lòng cậu,\Ncậu muốn quay về đội bóng rổ đúng không?
Dialogue: 0,0:11:56.09,0:11:59.30,Default,,0,0,0,,Nhớ có một lần,\Ntôi gặp cậu trên bãi biển...
Dialogue: 0,0:12:05.30,0:12:06.96,Default,,0,0,0,,- Thằng này!\N- Làm gì vậy?
Dialogue: 0,0:12:07.80,0:12:11.00,Default,,0,0,0,,Chuyền qua đây, chuyền qua đây,\Nchỗ này, chỗ này!
Dialogue: 0,0:12:13.07,0:12:17.34,Default,,0,0,0,,Lên nào, được rồi!
Dialogue: 0,0:12:18.59,0:12:20.39,Default,,0,0,0,,Mitsui, cậu làm gì vậy?
Dialogue: 0,0:12:20.80,0:12:22.34,Default,,0,0,0,,À, không có gì, không có gì.
Dialogue: 0,0:12:23.54,0:12:25.37,Default,,0,0,0,,Xin lỗi, phiền cậu chuyền bóng qua\Nđược không?
Dialogue: 0,0:12:27.65,0:12:29.29,Default,,0,0,0,,Phiền cậu...
Dialogue: 0,0:12:30.24,0:12:31.60,Default,,0,0,0,,Đợi đã.
Dialogue: 0,0:12:34.18,0:12:35.61,Default,,0,0,0,,Muốn lấy thì tự qua mà lấy.
Dialogue: 0,0:12:36.78,0:12:38.34,Default,,0,0,0,,Vâng.
Dialogue: 0,0:12:39.42,0:12:40.64,Default,,0,0,0,,Trả cho cậu.
Dialogue: 0,0:12:44.92,0:12:48.70,Default,,0,0,0,,[Lúc đó, thật ra Mitsui cậu không phải\Nthấy bọn họ chướng mắt,]
Dialogue: 0,0:12:49.08,0:12:51.87,Default,,0,0,0,,[mà là cậu ghét bộ dạng họ vui vẻ chơi bóng.]
Dialogue: 0,0:12:59.87,0:13:00.78,Default,,0,0,0,,Mitsui.
Dialogue: 0,0:13:01.86,0:13:06.22,Default,,0,0,0,,Cậu không cách nào quên được bóng rổ, cho nên...
Dialogue: 0,0:13:08.34,0:13:10.36,Default,,0,0,0,,- Mitsui! Dừng tay lại!\N- Đừng lải nhải nữa!
Dialogue: 0,0:13:10.46,0:13:13.61,Default,,0,0,0,,Ai ai cũng nhắc đến những chuyện vô dụng đó!
Dialogue: 0,0:13:13.73,0:13:17.04,Default,,0,0,0,,- Kogure!\N- Chết tiệt! Đồ nửa nạc nửa mỡ kia!
Dialogue: 0,0:13:17.12,0:13:19.45,Default,,0,0,0,,Đến nước này rồi mà anh vẫn không biết điều!
Dialogue: 0,0:13:20.00,0:13:22.66,Default,,0,0,0,,Cậu mà nhúng tay vào\Nchỉ khiến việc tồi tệ hơn, biến chỗ khác đi.
Dialogue: 0,0:13:23.60,0:13:26.13,Default,,0,0,0,,Tại sao lại ngăn em, bỏ tay ra, đáng ghét!
Dialogue: 0,0:13:26.20,0:13:28.92,Default,,0,0,0,,Em phải đi cứu anh Bốn Mắt, bỏ em ra!
Dialogue: 0,0:13:29.00,0:13:31.80,Default,,0,0,0,,Mitsui, bây giờ\Nchấn thương ở chân cậu đã lành rồi chứ?
Dialogue: 0,0:13:32.30,0:13:35.14,Default,,0,0,0,,Nếu như vậy, chúng ta hãy cùng chơi bóng rổ đi.
Dialogue: 0,0:13:36.52,0:13:37.49,Default,,0,0,0,,Anh Bốn Mắt!
Dialogue: 0,0:13:41.59,0:13:45.20,Default,,0,0,0,,Cậu là đồ ngu à?\NAi thèm chơi bóng với cậu, đồ ngu!
Dialogue: 0,0:13:45.72,0:13:49.28,Default,,0,0,0,,Bây giờ, đối với tôi,\Nbóng rổ không có chút giá trị gì cả!
Dialogue: 0,0:13:49.66,0:13:53.24,Default,,0,0,0,,Tôi đến đây chỉ là muốn dạy dỗ Miyagi thôi!
Dialogue: 0,0:13:53.37,0:13:55.68,Default,,0,0,0,,Không cho phép các cậu nhắc lại\Nnhững chuyện nhạt nhẽo lúc trước nữa!
Dialogue: 0,0:13:55.78,0:13:58.90,Default,,0,0,0,,Chơi bóng rổ chỉ đơn giản\Nlà hoạt động của câu lạc bộ mà thôi!
Dialogue: 0,0:13:59.02,0:14:02.11,Default,,0,0,0,,Tôi thấy chán nản mới chơi, không được sao?
Dialogue: 0,0:14:12.11,0:14:13.96,Default,,0,0,0,,Không phải cậu nói\Nmuốn xưng bá toàn quốc sao?
Dialogue: 0,0:14:15.56,0:14:16.80,Default,,0,0,0,,Không phải cậu nói\Nsẽ giành được số một cả nước sao?
Dialogue: 0,0:14:16.91,0:14:19.10,Default,,0,0,0,,Không phải cậu nói muốn\Nkhiến cho Shohoku mạnh lên sao?
Dialogue: 0,0:14:20.51,0:14:23.24,Default,,0,0,0,,[Mục tiêu của tôi là\Nmuốn Shohoku xưng bá toàn quốc!]
Dialogue: 0,0:14:23.37,0:14:24.57,Default,,0,0,0,,[Là số một cả nước!]
Dialogue: 0,0:14:25.31,0:14:28.82,Default,,0,0,0,,[Dựa vào năng lực của chúng ta,\Nkhiến cho Shohoku xưng bá toàn quốc đi!]
Dialogue: 0,0:14:32.11,0:14:37.68,Default,,0,0,0,,Đồ vô dụng, Mitsui,\Ncậu chỉ là một thằng nhát gan thôi sao?
Dialogue: 0,0:14:38.42,0:14:40.98,Default,,0,0,0,,Rõ ràng là đồ nhát gan,\Nvậy mà đòi xưng bá toàn quốc!
Dialogue: 0,0:14:41.10,0:14:44.73,Default,,0,0,0,,- Đừng nằm mơ giữa ban ngày nữa!\N- Kogure!
Dialogue: 0,0:14:50.04,0:14:52.77,Default,,0,0,0,,Đó là chuyện lúc trước,\Nkhông liên quan gì đến tôi nữa!
Dialogue: 0,0:14:53.02,0:14:55.00,Default,,0,0,0,,Cậu không được phép\Nnói ba chữ "không liên quan".
Dialogue: 0,0:14:56.03,0:14:59.00,Default,,0,0,0,,Tôi không giống với Akagi,\Nvới năng lực của tôi,
Dialogue: 0,0:14:59.10,0:15:03.29,Default,,0,0,0,,xưng bá toàn quốc là\Nđiều mà tôi nằm mơ cũng không dám nghĩ đến.
Dialogue: 0,0:15:03.88,0:15:07.42,Default,,0,0,0,,Tôi nằm mơ cũng không nghĩ có cơ hội này.
Dialogue: 0,0:15:07.54,0:15:11.29,Default,,0,0,0,,Nhưng lúc tôi thấy cậu và Akagi tập bóng,
Dialogue: 0,0:15:11.39,0:15:12.46,Default,,0,0,0,,từ lúc tôi bắt đầu chơi bóng rổ,
Dialogue: 0,0:15:12.54,0:15:14.62,Default,,0,0,0,,đó là lần đầu tiên tôi có dự cảm.
Dialogue: 0,0:15:21.52,0:15:23.88,Default,,0,0,0,,[Chỉ cần đội bóng có hai cậu\Nthì chắc chắn sẽ có hy vọng!]
Dialogue: 0,0:15:24.55,0:15:26.85,Default,,0,0,0,,[Xưng bá toàn quốc không hề là ước mơ.]
Dialogue: 0,0:15:26.93,0:15:30.01,Default,,0,0,0,,[Được rồi, ba năm này\Nmình nhất định phải cố gắng!]
Dialogue: 0,0:15:48.34,0:15:51.88,Default,,0,0,0,,Nhưng khi cậu rời đội bóng rổ,\Nước mơ của tôi đã bị dập tắt.
Dialogue: 0,0:15:52.15,0:15:55.61,Default,,0,0,0,,Chỉ còn mỗi mình Akagi,\Nkhông thể nào đạt được ước mơ.
Dialogue: 0,0:15:55.73,0:15:58.02,Default,,0,0,0,,Ngay lúc tôi sắp bỏ cuộc thì\NRukawa gia nhập đội, Miyagi cũng quay lại.
Dialogue: 0,0:15:58.18,0:16:00.32,Default,,0,0,0,,Năm nay lại có thêm cơ hội nữa.
Dialogue: 0,0:16:00.46,0:16:04.46,Default,,0,0,0,,Anh Bốn Mắt, hình như anh quên một người rồi!
Dialogue: 0,0:16:04.60,0:16:09.77,Default,,0,0,0,,- Còn thiên tài Sakuragi Hanamichi em nữa!\N- Cậu im miệng đi!
Dialogue: 0,0:16:10.65,0:16:14.32,Default,,0,0,0,,Trận đấu với Ryonan, mặc dù chúng tôi đã thua,
Dialogue: 0,0:16:14.43,0:16:15.43,Default,,0,0,0,,nhưng chỉ thua mỗi một điểm mà thôi.
Dialogue: 0,0:16:15.51,0:16:18.11,Default,,0,0,0,,Ngay lúc tôi bắt đầu cho rằng\Nnăm nay chắc chắn sẽ làm được
Dialogue: 0,0:16:18.22,0:16:23.24,Default,,0,0,0,,thì người đã biến mất hai năm, người cướp mất\Ngiấc mơ của tôi là cậu, đã xuất hiện trở lại,
Dialogue: 0,0:16:23.41,0:16:25.46,Default,,0,0,0,,lần này lại còn muốn đội bóng rổ giải tán!
Dialogue: 0,0:16:36.11,0:16:40.58,Default,,0,0,0,,Mitsui, rốt cuộc cậu muốn cướp mất ước mơ\Ncủa tôi bao nhiêu lần thì mới cam tâm?
Dialogue: 0,0:16:42.09,0:16:43.50,Default,,0,0,0,,Ko...Kogure!
Dialogue: 0,0:16:45.10,0:16:47.01,Default,,0,0,0,,Cậu lên tiếng đi chứ, Mitsui!
Dialogue: 0,0:16:47.12,0:16:48.59,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:16:49.49,0:16:52.25,Default,,0,0,0,,Kogure, ước mơ của cậu\Nthì liên quan khỉ gì đến tôi?
Dialogue: 0,0:16:52.49,0:16:55.12,Default,,0,0,0,,Bóng rổ... bóng rố... tôi đã sớm...
Dialogue: 0,0:16:55.24,0:16:56.34,Default,,0,0,0,,Mitsui!
Dialogue: 0,0:17:02.12,0:17:03.48,Default,,0,0,0,,Miyagi!
Dialogue: 0,0:17:03.92,0:17:07.55,Default,,0,0,0,,Người luôn chìm trong quá khứ\Nmãi không thoát là anh!
Dialogue: 0,0:17:22.97,0:17:25.57,Default,,0,0,0,,[Là tôi đây, mở cửa.]
Dialogue: 0,0:17:33.38,0:17:34.94,Default,,0,0,0,,[Mau mở cửa đi.]
Dialogue: 0,0:17:48.23,0:17:49.89,Default,,0,0,0,,Là cậu sao?
Dialogue: 0,0:18:02.61,0:18:07.48,Default,,0,0,0,,Cho đến phút cuối cùng\Ncũng không được từ bỏ hy vọng.
Dialogue: 0,0:18:10.25,0:18:13.40,Default,,0,0,0,,Một khi từ bỏ thì trận đấu sẽ kết thúc.
Dialogue: 0,0:18:17.46,0:18:19.62,Default,,0,0,0,,- Kogure!\N- Akagi, cậu còn non quá!
Dialogue: 0,0:18:24.05,0:18:26.68,Default,,0,0,0,,- Mitsui!\N- Mitsui!
Dialogue: 0,0:18:38.90,0:18:43.73,Default,,0,0,0,,Huấn luyện viên... huấn luyện viên Anzai!
Dialogue: 0,0:19:06.93,0:19:09.24,Default,,0,0,0,,Em... em muốn chơi bóng rổ.
Dialogue: 0,0:19:19.73,0:19:20.94,Default,,0,0,0,,Em muốn chơi bóng rổ!
Dialogue: 0,0:19:54.09,0:19:56.62,Default,,0,0,0,,- Mitsui...\N- Mitsui!
Dialogue: 0,0:19:57.71,0:20:00.14,Default,,0,0,0,,Không tin được, là tên nửa nạc nửa mỡ đó sao?
Dialogue: 0,0:20:10.36,0:20:11.79,Default,,0,0,0,,Hô hô...
Dialogue: 0,0:20:18.34,0:20:22.71,Default,,0,0,0,,[Mitsui cắt bỏ mái tóc dài ,\Ntừ bỏ lòng tự cao và kiêu ngạo,]
Dialogue: 0,0:20:22.86,0:20:24.33,Default,,0,0,0,,[một lần nữa quay lại đội bóng rổ.]
Dialogue: 0,0:20:25.55,0:20:28.89,Default,,0,0,0,,[Tôi nghĩ để cậu ấy hòa nhập được với cả đội\Ncòn phải tốn thêm ít thời gian.]
Dialogue: 0,0:20:29.51,0:20:33.79,Default,,0,0,0,,[Hơn nữa việc bỏ bê suốt hai năm nay\Nkhó mà bù đắp lại được.]
Dialogue: 0,0:20:33.93,0:20:35.22,Default,,0,0,0,,[Nhưng tôi tin có một ngày,]
Dialogue: 0,0:20:35.33,0:20:38.02,Default,,0,0,0,,[cậu ấy sẽ trở thành một thành viên\Nkhông thể thiếu của Shohoku.]
Dialogue: 0,0:20:38.81,0:20:40.78,Default,,0,0,0,,[Cố lên, Mitsui!]
Dialogue: 0,0:20:41.18,0:20:44.72,Default,,0,0,0,,[Chơi hăng vào! Shohoku cố lên!]
Dialogue: 0,0:20:46.70,0:20:48.60,Default,,0,0,0,,[Mitsui đã bày tỏ với huấn luyện Anzai]
Dialogue: 0,0:20:48.71,0:20:53.36,Default,,0,0,0,,[rằng cậu không thể quên được\Nsự nhiệt huyết trong bóng rổ.]
Dialogue: 0,0:20:53.73,0:20:57.11,Default,,0,0,0,,[Một lần nữa,\Ncậu ấy đã trở về đội bóng rổ Shohoku!]
Dialogue: 0,0:21:08.53,0:21:16.02,Default,,0,0,0,,♫ Cô đơn lẻ bóng, chơi vơi nơi thành thị lớn ♫
Dialogue: 0,0:21:17.78,0:21:25.02,Default,,0,0,0,,♫ Như một chai bia rỗng bị người ta vứt đi ♫
Dialogue: 0,0:21:25.16,0:21:34.27,Default,,0,0,0,,♫ Nếu buộc phải tìm hiểu mọi thứ của nhau ♫
Dialogue: 0,0:21:34.54,0:21:42.75,Default,,0,0,0,,♫ Mới gọi là yêu,\Nthì chi bằng ngủ một giấc vĩnh hằng ♫
Dialogue: 0,0:21:42.96,0:21:52.61,Default,,0,0,0,,♫ Đến tận cùng của thế giới\Ncũng không muốn xa cậu ♫
Dialogue: 0,0:21:52.75,0:21:56.95,Default,,0,0,0,,♫ Từng cầu nguyện\Ntrong biết bao nhiêu đêm tối ♫
Dialogue: 0,0:21:57.14,0:22:05.67,Default,,0,0,0,,♫ Rằng thời gian không trở lại ơi,\Nvì sao lại lóa mắt thế ♫
Dialogue: 0,0:22:05.78,0:22:19.34,Default,,0,0,0,,♫ Xát muối thêm vào trái tim\Nvốn đã tiều tụy quá đỗi này ♫
Dialogue: 0,0:22:19.96,0:22:30.12,Default,,0,0,0,,♫ Nỗi nhớ mịt mờ trong đêm bi kịch này ♫
Dialogue: 0,0:22:36.52,0:22:38.01,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:39.55,0:22:42.85,Default,,0,0,0,,Lần ẩu đả này được Hotta và Yohei nhận lỗi,
Dialogue: 0,0:22:43.05,0:22:44.58,Default,,0,0,0,,nên mọi chuyện đã được giải quyết.
Dialogue: 0,0:22:44.70,0:22:47.26,Default,,0,0,0,,Bọn mày thật là vĩ đại quá!
Dialogue: 0,0:22:47.36,0:22:49.95,Default,,0,0,0,,Tiếp đến, Mitsui cũng gỡ bỏ\Nmọi nút thắt và về lại đội bóng,
Dialogue: 0,0:22:50.30,0:22:53.01,Default,,0,0,0,,đội bóng rổ hãy cố gắng\Ntiến tới mục tiêu xưng bá toàn quốc nào!
Dialogue: 0,0:22:53.15,0:22:56.97,Default,,0,0,0,,Sakuragi được tôi đưa vào đội bóng rổ,\Nchắc chắn không thành vấn đề!
Dialogue: 0,0:22:57.06,0:22:57.73,Default,,0,0,0,,Cố lên nhé!
Dialogue: 0,0:22:57.83,0:22:59.35,Default,,0,0,0,,Không thành vấn đề, Haruko!
Dialogue: 0,0:22:59.82,0:23:03.20,Default,,0,0,0,,[Cao thủ bóng rổ:\NVòng đấu loại các trường cấp ba bắt đầu.]
Dialogue: 0,0:23:03.32,0:23:04.31,Default,,0,0,0,,Đừng bỏ qua đấy.
