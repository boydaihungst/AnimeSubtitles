Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:04.53,0:00:11.25,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:28.91,0:00:35.39,Default,,0,0,0,,♫ Ánh mặt trời chói rọi phía sau lưng,\Ntôi bước trên con đường này ♫
Dialogue: 0,0:00:35.75,0:00:41.75,Default,,0,0,0,,♫ Cũng như thường lệ, lại bị vỗ vai ♫
Dialogue: 0,0:00:42.45,0:00:48.86,Default,,0,0,0,,♫ Cậu là nữ thần của tôi, không có lý do gì cả ♫
Dialogue: 0,0:00:49.36,0:00:54.10,Default,,0,0,0,,♫ Nhưng lại chưa từng khoác lấy tay tôi ♫
Dialogue: 0,0:00:54.53,0:01:00.74,Default,,0,0,0,,♫ Không biết từ lúc nào,\Nánh mắt đã không thể rời đi ♫
Dialogue: 0,0:01:01.41,0:01:07.21,Default,,0,0,0,,♫ Không buông ra, không do dự,\Nđiên cuồng vì cậu ♫
Dialogue: 0,0:01:07.78,0:01:14.55,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:01:14.92,0:01:21.29,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:01:21.49,0:01:28.43,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm tiến lên một bước ♫
Dialogue: 0,0:01:28.78,0:01:35.72,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:01:45.44,0:01:47.94,Default,,0,0,0,,[Shohoku thành công giành thắng lợi trong\Nvòng đấu loại của giải các trường cấp ba.]
Dialogue: 0,0:01:47.98,0:01:49.73,Default,,0,0,0,,[Để giành vé vào vòng chung kết.]
Dialogue: 0,0:01:49.76,0:01:52.88,Default,,0,0,0,,[phải thi đấu với đội đứng\Nthứ hai của tỉnh - đội Shoyo.]
Dialogue: 0,0:01:53.70,0:01:57.55,Default,,0,0,0,,[Trận đấu vừa mới bắt đầu thì ý chí\Nchiến đấu của Sakuragi Hanamichi đã bùng nổ.]
Dialogue: 0,0:01:59.12,0:02:01.34,Default,,0,0,0,,[Tên đeo mắt kính đó\Ncũng cao to như Tinh Tinh Bự.]
Dialogue: 0,0:02:01.89,0:02:04.73,Default,,0,0,0,,[Bọn họ đều cao to như vậy, nếu so sánh\Nthì Hanamichi chỉ là ở mức bình thường thôi.]
Dialogue: 0,0:02:12.30,0:02:13.19,Default,,0,0,0,,Bắt được rồi!
Dialogue: 0,0:02:14.36,0:02:15.12,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:02:17.14,0:02:20.24,Default,,0,0,0,,Áo trắng số 4, phạm lỗi nảy bóng!
Dialogue: 0,0:02:22.24,0:02:25.47,Default,,0,0,0,,[Nhưng với sự dẫn đầu của Akagi,\Ntoàn đội Shohoku vẫn rơi vào thế bị động,]
Dialogue: 0,0:02:25.70,0:02:29.60,Default,,0,0,0,,[đội Shoyo với chiều cao hơn người,\Ntrận đấu vừa bắt đầu đã ở thế thượng phong.]
Dialogue: 0,0:02:33.59,0:02:38.43,Default,,0,0,0,,[So với hai trung phong\Ngiỏi nhất tỉnh là Akagi và Uozumi,]
Dialogue: 0,0:02:38.61,0:02:43.82,Default,,0,0,0,,[Hanagata của Shoyo liên tục ném bóng,\Náp đảo Shohoku.]
Dialogue: 0,0:02:47.67,0:02:50.08,Default,,0,0,0,,[Nếu Akagi và Uozumi\Nlà hai trung phong mạnh mẽ,]
Dialogue: 0,0:02:50.10,0:02:51.77,Default,,0,0,0,,[thì Hanagata mềm dẻo hơn nhiều.]
Dialogue: 0,0:02:52.33,0:02:53.63,Default,,0,0,0,,[Hanagata đối đầu với Akagi,]
Dialogue: 0,0:02:54.11,0:02:59.47,Default,,0,0,0,,[trong trận đấu này, xem ra trụ cột Akagi\Ncủa Shohoku sẽ bị Hanagata đánh bại.]
Dialogue: 0,0:02:59.83,0:03:04.04,Default,,0,0,0,,[Trận đấu này có thể sẽ trở thành\Nmàn trình diễn của Shoyo.]
Dialogue: 0,0:03:04.07,0:03:06.51,Default,,0,0,0,,Hanagata! Hanagata!
Dialogue: 0,0:03:06.53,0:03:09.23,Default,,0,0,0,,Hanagata! Hanagata!
Dialogue: 0,0:03:09.26,0:03:11.61,Default,,0,0,0,,Hanagata! Hanagata!
Dialogue: 0,0:03:13.14,0:03:21.78,Default,,0,0,0,,[Đòn phản công của Rukawa!]
Dialogue: 0,0:03:15.31,0:03:16.95,Default,,0,0,0,,[Đòn phản công của Rukawa!]
Dialogue: 0,0:03:22.22,0:03:25.61,Default,,0,0,0,,Shoyo, cố lên!\NShoyo, thừa thắng xông lên!
Dialogue: 0,0:03:25.64,0:03:29.20,Default,,0,0,0,,Shoyo, cố lên!\NShoyo, thừa thắng xông lên!
Dialogue: 0,0:03:35.60,0:03:38.13,Default,,0,0,0,,Hanagata! Hanagata!
Dialogue: 0,0:03:39.09,0:03:41.39,Default,,0,0,0,,Hanagata! Hanagata!
Dialogue: 0,0:03:42.41,0:03:44.70,Default,,0,0,0,,Hanagata! Hanagata!
Dialogue: 0,0:03:45.71,0:03:48.03,Default,,0,0,0,,Hanagata! Hanagata!
Dialogue: 0,0:03:49.06,0:03:51.39,Default,,0,0,0,,Hanagata! Hanagata!
Dialogue: 0,0:03:52.40,0:03:57.35,Default,,0,0,0,,Hanagata! Hanagata...
Dialogue: 0,0:03:59.79,0:04:03.12,Default,,0,0,0,,Tôi sẽ khiến cho người gọi tên Hanamichi\Nthay cho tên Hanagata nhanh thôi!
Dialogue: 0,0:04:03.21,0:04:06.05,Default,,0,0,0,,Khỉ thật! Sakuragi Hanamichi!\NĐừng để bị mất tập trung!
Dialogue: 0,0:04:13.31,0:04:13.93,Default,,0,0,0,,Ito!
Dialogue: 0,0:04:20.40,0:04:21.50,Default,,0,0,0,,[Với không tới!]
Dialogue: 0,0:04:38.58,0:04:43.29,Default,,0,0,0,,Ồ! Cú ba điểm! Tỉ số bây giờ là 11-0.
Dialogue: 0,0:04:45.40,0:04:50.49,Default,,0,0,0,,Shoyo, cố lên!\NShoyo, thừa thắng xông lên!
Dialogue: 0,0:04:50.60,0:04:52.03,Default,,0,0,0,,- Ném hay lắm, Ito!\N- Vâng!
Dialogue: 0,0:04:52.14,0:04:53.11,Default,,0,0,0,,Chơi tốt lắm!
Dialogue: 0,0:04:54.19,0:04:54.95,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:04:56.47,0:04:57.62,Default,,0,0,0,,Đám chết bằm này!
Dialogue: 0,0:04:57.64,0:04:59.41,Default,,0,0,0,,Shoyo, thừa thắng xông lên!
Dialogue: 0,0:04:59.43,0:05:02.91,Default,,0,0,0,,Shoyo, cố lên!\NShoyo, thừa thắng xông lên!
Dialogue: 0,0:05:02.93,0:05:06.68,Default,,0,0,0,,Shoyo, cố lên!\NShoyo, thừa thắng xông lên!
Dialogue: 0,0:05:06.70,0:05:08.41,Default,,0,0,0,,Shoyo, cố lên!
Dialogue: 0,0:05:15.44,0:05:20.07,Default,,0,0,0,,Trận đấu đã bắt đầu được sáu phút rồi\Nmà Shohoku vẫn ở mãi điểm không.
Dialogue: 0,0:05:20.64,0:05:23.67,Default,,0,0,0,,Chứng tỏ Shoyo đúng là một đội mạnh!
Dialogue: 0,0:05:24.50,0:05:28.19,Default,,0,0,0,,Shoyo rất mạnh,\Nnhưng Shohoku cũng không kém mới đúng.
Dialogue: 0,0:05:28.68,0:05:31.21,Default,,0,0,0,,Lúc thi đấu với chúng ta không kém như vậy.
Dialogue: 0,0:05:31.21,0:05:32.65,Default,,0,0,0,,Thầy nói phải.
Dialogue: 0,0:05:32.85,0:05:36.95,Default,,0,0,0,,Hơn nữa trong trận đấu giao hữu\Nkhông có Miyagi,
Dialogue: 0,0:05:37.12,0:05:40.32,Default,,0,0,0,,cũng không có Mitsui,\Ncầu thủ có giá trị nhất thời cấp hai,
Dialogue: 0,0:05:40.78,0:05:42.64,Default,,0,0,0,,cũng chỉ thua chúng ta có một điểm mà thôi.
Dialogue: 0,0:05:43.16,0:05:43.97,Default,,0,0,0,,Hơn nữa sau trận đấu tập,
Dialogue: 0,0:05:44.96,0:05:49.03,Default,,0,0,0,,Sakuragi phải tiến bộ hơn\Nrất nhiều mới phải.
Dialogue: 0,0:05:49.40,0:05:52.70,Default,,0,0,0,,Năng lực của Shohoku đáng lý ra\Nphải mạnh hơn rất nhiều mới đúng.
Dialogue: 0,0:05:53.11,0:05:54.15,Default,,0,0,0,,Thật kỳ lạ.
Dialogue: 0,0:05:57.21,0:05:59.94,Default,,0,0,0,,Cậu ta có tiến bộ hay không, tôi không biết,
Dialogue: 0,0:06:00.31,0:06:04.05,Default,,0,0,0,,nhưng tên Sakuragi đó.... tên Sakuragi đó....
Dialogue: 0,0:06:10.65,0:06:12.02,Default,,0,0,0,,Thầy sao vậy?
Dialogue: 0,0:06:12.13,0:06:16.20,Default,,0,0,0,,Có phải là cần đi vệ sinh không?\NThầy đừng nhịn mãi, không tốt cho sức khỏe đâu ạ.
Dialogue: 0,0:06:16.34,0:06:17.11,Default,,0,0,0,,Đồ ngốc!
Dialogue: 0,0:06:18.41,0:06:22.93,Default,,0,0,0,,Tại sao lại đánh em?\NNhịn lâu quá không tốt cho sức khỏe thật mà!
Dialogue: 0,0:06:23.18,0:06:27.18,Default,,0,0,0,,[Tuyệt đối không thể tha cho tên Sakuragi đó!]
Dialogue: 0,0:06:27.26,0:06:30.13,Default,,0,0,0,,- Được rồi, chặn họ lại!\N- Rõ!
Dialogue: 0,0:06:30.76,0:06:31.96,Default,,0,0,0,,Ghi điểm nào!
Dialogue: 0,0:06:35.54,0:06:37.42,Default,,0,0,0,,Rốt cuộc họ bị sao vậy?
Dialogue: 0,0:06:37.54,0:06:39.14,Default,,0,0,0,,Trông như rất mệt vậy.
Dialogue: 0,0:06:39.37,0:06:40.93,Default,,0,0,0,,Chiều cao của Shoyo
Dialogue: 0,0:06:40.95,0:06:43.81,Default,,0,0,0,,đã khiến cho mọi người rất áp lực.
Dialogue: 0,0:06:44.13,0:06:46.43,Default,,0,0,0,,Bất luận là tinh thần hay cơ thể\Nđều bị ảnh hưởng.
Dialogue: 0,0:06:48.00,0:06:51.77,Default,,0,0,0,,Muốn đối chọi với chiều cao của Shoyo thì\Nđộng tác phải mạnh gấp hai lần so với bình thường.
Dialogue: 0,0:06:52.21,0:06:53.71,Default,,0,0,0,,Đương nhiên cũng sẽ mệt mỏi hơn nhiều lần.
Dialogue: 0,0:06:54.31,0:06:55.01,Default,,0,0,0,,Nhưng mà...
Dialogue: 0,0:06:55.51,0:06:59.21,Default,,0,0,0,,Nhưng nếu không khắc phục được điểm này\Nsẽ không thể tham gia vòng chung kết được.
Dialogue: 0,0:07:00.24,0:07:01.77,Default,,0,0,0,,Akagi, cố lên! Mọi người cố lên nào!
Dialogue: 0,0:07:01.89,0:07:04.83,Default,,0,0,0,,Shohoku, cố lên! Trận đấu bây giờ mới bắt đầu!
Dialogue: 0,0:07:04.85,0:07:06.83,Default,,0,0,0,,Phòng thủ! Phòng thủ!
Dialogue: 0,0:07:06.86,0:07:08.63,Default,,0,0,0,,Phòng thủ! Phòng thủ!
Dialogue: 0,0:07:08.65,0:07:10.44,Default,,0,0,0,,Phòng thủ! Phòng thủ!
Dialogue: 0,0:07:10.47,0:07:12.22,Default,,0,0,0,,Phòng thủ! Phòng thủ!
Dialogue: 0,0:07:12.24,0:07:14.02,Default,,0,0,0,,Phòng thủ! Phòng thủ!
Dialogue: 0,0:07:14.05,0:07:15.84,Default,,0,0,0,,Phòng thủ! Phòng thủ!
Dialogue: 0,0:07:15.87,0:07:17.63,Default,,0,0,0,,Phòng thủ! Phòng thủ!
Dialogue: 0,0:07:20.98,0:07:21.91,Default,,0,0,0,,Miyagi!
Dialogue: 0,0:07:24.05,0:07:24.95,Default,,0,0,0,,Tốt!
Dialogue: 0,0:07:26.87,0:07:27.74,Default,,0,0,0,,Mình nhất định sẽ ném vào được!
Dialogue: 0,0:07:31.37,0:07:35.23,Default,,0,0,0,,Mitchi, mau chuyền bóng, mau chuyền bóng!
Dialogue: 0,0:07:35.34,0:07:37.86,Default,,0,0,0,,Mitsui đừng cố ném, mau chuyền bóng đi!
Dialogue: 0,0:07:37.95,0:07:39.80,Default,,0,0,0,,Mitsui, mau chuyền cho Hanamichi đi!
Dialogue: 0,0:07:39.90,0:07:41.92,Default,,0,0,0,,Chuyền bóng!
Dialogue: 0,0:07:42.01,0:07:45.31,Default,,0,0,0,,Mau chuyền bóng, chậm mà chắc\Nthì mới ghi điểm được!
Dialogue: 0,0:07:45.55,0:07:46.99,Default,,0,0,0,,[Lải nhải thật đấy!]
Dialogue: 0,0:07:47.26,0:07:49.42,Default,,0,0,0,,[Mình chỉ cần ném vào bốn quả ba điểm\Nlà có thể lật ngược tình thế.]
Dialogue: 0,0:07:51.46,0:07:54.76,Default,,0,0,0,,Chết tiệt! Mitchi, kêu anh chuyền bóng đấy,\Ncó nghe không?
Dialogue: 0,0:07:56.20,0:07:58.02,Default,,0,0,0,,Bắt được rồi, chết rồi!
Dialogue: 0,0:07:59.47,0:08:00.23,Default,,0,0,0,,Chết rồi!
Dialogue: 0,0:08:02.37,0:08:04.40,Default,,0,0,0,,- Áo trắng, bóng của Shohoku.\N- Tốt!
Dialogue: 0,0:08:05.95,0:08:09.95,Default,,0,0,0,,Sakuragi, mắt cậu để ở đâu vậy?\NĐã chuyền bóng theo lời cậu rồi đấy!
Dialogue: 0,0:08:10.04,0:08:11.46,Default,,0,0,0,,Có ai chuyền đột ngột như thế chứ?
Dialogue: 0,0:08:11.48,0:08:13.95,Default,,0,0,0,,Anh muốn chuyền bóng\Nthì phải nói một tiếng chứ!
Dialogue: 0,0:08:14.18,0:08:15.59,Default,,0,0,0,,- Biến đi, đồ ngoài ngành!\N- Anh nói gì đó?
Dialogue: 0,0:08:15.62,0:08:17.19,Default,,0,0,0,,Sakuragi, là lỗi của cậu.
Dialogue: 0,0:08:17.90,0:08:21.43,Default,,0,0,0,,Nhưng mà Mitsui,\Ncậu mạo hiểm cú ba điểm như vậy,
Dialogue: 0,0:08:21.53,0:08:23.35,Default,,0,0,0,,chi bằng chuyền bóng cho đội,
Dialogue: 0,0:08:23.38,0:08:25.80,Default,,0,0,0,,như vậy sẽ tấn công ổn định hơn.
Dialogue: 0,0:08:26.67,0:08:28.51,Default,,0,0,0,,Akagi, trước khi dạy đời người khác
Dialogue: 0,0:08:28.71,0:08:31.94,Default,,0,0,0,,thì cậu nên nghĩ cách làm sao\Nđể đối phó với Hanagata áp đảo cậu đi.
Dialogue: 0,0:08:35.36,0:08:38.00,Default,,0,0,0,,Tôi sẽ đánh bại tên đeo mắt kính đó!
Dialogue: 0,0:08:39.08,0:08:43.43,Default,,0,0,0,,Làm gì đó Rukawa! Hôm nay tao nhất định\Nphải ghi điểm nhiều hơn mày!
Dialogue: 0,0:08:43.58,0:08:45.52,Default,,0,0,0,,Mày nhớ cho kỹ đấy!
Dialogue: 0,0:08:46.14,0:08:49.68,Default,,0,0,0,,- Các cậu đang làm gì vậy?\N- Bây giờ không phải lúc để cãi nhau!
Dialogue: 0,0:08:49.79,0:08:51.99,Default,,0,0,0,,Sao lại lựa ngay lúc này để cãi nhau chứ?
Dialogue: 0,0:08:56.40,0:08:57.00,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:09:00.80,0:09:04.21,Default,,0,0,0,,Bóng bị giành rồi! Shohoku rơi vào thế khó!
Dialogue: 0,0:09:04.54,0:09:07.71,Default,,0,0,0,,Làm tốt lắm!
Dialogue: 0,0:09:10.07,0:09:12.42,Default,,0,0,0,,Chiều cao của Shoyo đúng là rất có lợi,
Dialogue: 0,0:09:12.69,0:09:15.89,Default,,0,0,0,,nhưng Shohoku cũng không quan tâm\Nđến việc bị giành bóng hay không.
Dialogue: 0,0:09:16.19,0:09:19.15,Default,,0,0,0,,Bình luận viên Taoka,\Ncó phải vì gặp phải đối thủ như Shoyo
Dialogue: 0,0:09:19.18,0:09:21.40,Default,,0,0,0,,nên Shohoku không thể nào\Nphát huy năng lực hay không?
Dialogue: 0,0:09:21.53,0:09:25.99,Default,,0,0,0,,- Đồ ngốc! Gọi ai là bình luận viên Taoka hả?\N- Em xin lỗi, em nhập tâm quá!
Dialogue: 0,0:09:26.35,0:09:30.62,Default,,0,0,0,,[Akagi đã mất đi sự bình tĩnh của mọi ngày.]
Dialogue: 0,0:09:31.36,0:09:36.93,Default,,0,0,0,,[Nếu tiếp tục không ghi điểm\Nthì Shohoku sẽ không còn cơ hội gỡ điểm nữa.]
Dialogue: 0,0:09:47.91,0:09:48.51,Default,,0,0,0,,Tốt!
Dialogue: 0,0:09:49.14,0:09:52.06,Default,,0,0,0,,- Lại là tên đó!\N- Bóng mà rơi vào tên đeo mắt kính đó là toi rồi!
Dialogue: 0,0:09:59.65,0:10:00.42,Default,,0,0,0,,[Anh trai!]
Dialogue: 0,0:10:00.65,0:10:01.58,Default,,0,0,0,,[Đừng hòng qua được đó!]
Dialogue: 0,0:10:05.20,0:10:07.04,Default,,0,0,0,,[Không cho cậu ném bóng!]
Dialogue: 0,0:10:08.14,0:10:08.64,Default,,0,0,0,,Đội trưởng!
Dialogue: 0,0:10:08.93,0:10:10.57,Default,,0,0,0,,Đồ ngốc, đó là động tác giả!
Dialogue: 0,0:10:18.87,0:10:19.67,Default,,0,0,0,,Tôi ném đây!
Dialogue: 0,0:10:25.48,0:10:26.32,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:10:38.30,0:10:39.23,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:10:52.64,0:10:54.11,Default,,0,0,0,,- Lấy được bóng rồi!\N- Rukawa!
Dialogue: 0,0:10:56.75,0:10:58.78,Default,,0,0,0,,- Tuyệt lắm!\N- Lên nào Rukawa!
Dialogue: 0,0:11:00.89,0:11:03.91,Default,,0,0,0,,Cậu ấy bị ba người kèm chặt,\Nmọi người mau đến giúp đỡ.
Dialogue: 0,0:11:04.09,0:11:06.06,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:11:10.70,0:11:15.30,Default,,0,0,0,,Đồ khốn Rukawa! Đừng có ra vẻ nữa!
Dialogue: 0,0:11:15.43,0:11:17.27,Default,,0,0,0,,Rukawa Kaede, đừng vội, chuyền bóng đã!
Dialogue: 0,0:11:22.08,0:11:24.84,Default,,0,0,0,,Tên đó muốn một mình xông qua đây sao?
Dialogue: 0,0:11:24.96,0:11:27.09,Default,,0,0,0,,Thằng nhãi lớp 10,\Nđừng xem thường người khác!
Dialogue: 0,0:11:27.17,0:11:32.56,Default,,0,0,0,,Rukawa! Mày muốn để mất cơ hội sao?\NChuyền bóng! Chuyền bóng!
Dialogue: 0,0:11:32.67,0:11:33.57,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:11:39.38,0:11:43.43,Default,,0,0,0,,- Tôi sẽ đánh bại cậu!\N- Làm bậy rồi, Rukawa!
Dialogue: 0,0:11:56.03,0:11:57.84,Default,,0,0,0,,Gì cơ?
Dialogue: 0,0:13:04.14,0:13:06.91,Default,,0,0,0,,Trong lúc nhảy tên đó\Nđã làm nhiều động tác khác nhau!
Dialogue: 0,0:13:08.70,0:13:13.01,Default,,0,0,0,,- Shohoku có một tên rất lợi hại.\N- Là số 11 đó!
Dialogue: 0,0:13:14.01,0:13:15.78,Default,,0,0,0,,[Là Rukawa của trường cấp hai Tomigaoka sao?]
Dialogue: 0,0:13:18.40,0:13:22.92,Default,,0,0,0,,Rukawa! Rukawa! L O V E! Rukawa! Rukawa!
Dialogue: 0,0:13:24.22,0:13:26.25,Default,,0,0,0,,Họ đến thật kìa.
Dialogue: 0,0:13:26.59,0:13:30.83,Default,,0,0,0,,So với đội cổ vũ của Rukawa thì\Nđội cổ vũ của Shoyo như mấy con bù nhìn vậy.
Dialogue: 0,0:13:31.47,0:13:35.07,Default,,0,0,0,,- Đúng không? Haruko...\N- Cậu ấy đã...
Dialogue: 0,0:13:39.32,0:13:41.95,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:13:42.34,0:13:45.01,Default,,0,0,0,,Đúng.... đúng là Rukawa!
Dialogue: 0,0:13:46.54,0:13:51.55,Default,,0,0,0,,Mày.... mày... mày...
Dialogue: 0,0:13:51.65,0:13:54.17,Default,,0,0,0,,Rukawa, mày chỉ muốn tỏ vẻ thôi!
Dialogue: 0,0:13:54.27,0:13:57.64,Default,,0,0,0,,May mà vào được,\Ncậu nên đợi chúng tôi rồi mới đánh chứ,
Dialogue: 0,0:13:57.74,0:13:59.24,Default,,0,0,0,,vừa nãy là ba kèm một đấy.
Dialogue: 0,0:14:00.01,0:14:03.44,Default,,0,0,0,,[Buổi trình diễn cá nhân của\Nthiên tài Sakuragi đây bị giành mất!]
Dialogue: 0,0:14:03.48,0:14:07.15,Default,,0,0,0,,[Không thể tha thứ\Ncho màn trình diễn của Rukawa được!]
Dialogue: 0,0:14:07.82,0:14:09.55,Default,,0,0,0,,Động tác của các anh cứng ngắc như đá vậy,
Dialogue: 0,0:14:09.86,0:14:11.22,Default,,0,0,0,,đương nhiên không thể\Nchuyền bóng cho các anh.
Dialogue: 0,0:14:19.21,0:14:23.31,Default,,0,0,0,,Tên nhãi này!
Dialogue: 0,0:14:23.51,0:14:25.60,Default,,0,0,0,,Khốn nạn! Thằng lớp 10 kia!
Dialogue: 0,0:14:25.61,0:14:29.28,Default,,0,0,0,,Cậu dám dạy dỗ tôi sao? Cậu tưởng cậu là ai?
Dialogue: 0,0:14:29.65,0:14:32.50,Default,,0,0,0,,Lớp 10 năm nay không đáng yêu chút nào!
Dialogue: 0,0:14:32.65,0:14:33.96,Default,,0,0,0,,Động tác của ai như đá hả?
Dialogue: 0,0:14:34.60,0:14:36.66,Default,,0,0,0,,Hài hước! Động tác của mày mới èo ọt đấy!
Dialogue: 0,0:14:36.68,0:14:38.96,Default,,0,0,0,,Đi tập nhịp điệu cũng được nữa đấy!
Dialogue: 0,0:14:39.51,0:14:43.88,Default,,0,0,0,,Mày nhìn xem bước đi nhanh nhẹn của tao,\Nai đến tao cũng có thể ngăn được!
Dialogue: 0,0:14:44.55,0:14:47.89,Default,,0,0,0,,Đừng có vơ đũa cả nắm, đồ ngu!
Dialogue: 0,0:14:47.91,0:14:51.06,Default,,0,0,0,,Anh nói gì đó? Anh mới ngu đấy!
Dialogue: 0,0:14:51.12,0:14:53.82,Default,,0,0,0,,- Không muốn bị cậu nhận xét đấy!\N- Nói gì đó?
Dialogue: 0,0:14:53.95,0:14:55.91,Default,,0,0,0,,Các cậu cãi nhau gì thế? Đối thủ đến rồi kìa!
Dialogue: 0,0:14:55.91,0:14:57.65,Default,,0,0,0,,Phòng thủ, phòng thủ đi!
Dialogue: 0,0:15:00.69,0:15:02.09,Default,,0,0,0,,Đùa gì chứ?
Dialogue: 0,0:15:02.29,0:15:05.30,Default,,0,0,0,,- [Rukawa, cậu đợi đấy!]\N- [Tên điên Rukawa này,]
Dialogue: 0,0:15:05.33,0:15:08.66,Default,,0,0,0,,[bây giờ tao sẽ cho mày biết\Ncái gì là thiên tài!]
Dialogue: 0,0:15:08.79,0:15:11.30,Default,,0,0,0,,Shoyo! Tới nào!
Dialogue: 0,0:15:14.57,0:15:15.60,Default,,0,0,0,,[Gì vậy trời?]
Dialogue: 0,0:15:19.37,0:15:21.67,Default,,0,0,0,,Là Hanagata, anh ta lại đến rồi!
Dialogue: 0,0:15:24.41,0:15:25.48,Default,,0,0,0,,Ngăn cậu ta lại!
Dialogue: 0,0:15:40.46,0:15:43.11,Default,,0,0,0,,Kia rồi, tuyệt chiêu đập ruồi của Akagi!
Dialogue: 0,0:15:43.21,0:15:45.64,Default,,0,0,0,,Đàn anh Akagi, chặn hay lắm!
Dialogue: 0,0:15:47.48,0:15:48.15,Default,,0,0,0,,Nữa kìa!
Dialogue: 0,0:15:54.55,0:15:56.29,Default,,0,0,0,,Đồ khốn!
Dialogue: 0,0:15:58.39,0:16:01.15,Default,,0,0,0,,Là tuyệt chiêu đập ruồi của Akagi!
Dialogue: 0,0:16:01.16,0:16:05.56,Default,,0,0,0,,Tuyệt vời!\NĐây là cú chặn tuyệt vời của Sakuragi!
Dialogue: 0,0:16:07.77,0:16:08.71,Default,,0,0,0,,Qua được rồi!
Dialogue: 0,0:16:08.83,0:16:10.60,Default,,0,0,0,,Mau lên! Chạy đi!
Dialogue: 0,0:16:11.10,0:16:13.60,Default,,0,0,0,,- Rukawa, thế nào?\N- Đừng hống hách quá!
Dialogue: 0,0:16:14.55,0:16:15.67,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:16:16.70,0:16:21.91,Default,,0,0,0,,Hai người cao nhất ở đội chúng ta\Nlà Hanagata và Takano cũng bị chặn được sao?
Dialogue: 0,0:16:22.01,0:16:26.88,Default,,0,0,0,,- Lần đầu tiên tôi thấy đấy!\N- Tên Akagi và tên tóc đỏ đó!
Dialogue: 0,0:16:27.89,0:16:32.83,Default,,0,0,0,,[Sức mạnh và sức bật của số 10 đội Shohoku\Ncó khi còn mạnh hơn Akagi.]
Dialogue: 0,0:16:33.34,0:16:34.17,Default,,0,0,0,,Xông lên!
Dialogue: 0,0:16:37.29,0:16:38.24,Default,,0,0,0,,[Akagi!]
Dialogue: 0,0:16:41.51,0:16:45.21,Default,,0,0,0,,[Rukawa, bây giờ mày biết\Nnăng lực thật sự của thiên tài rồi chứ?]
Dialogue: 0,0:16:45.32,0:16:48.32,Default,,0,0,0,,[Hôm nay chắc chắn\Ntao sẽ ghi điểm nhiều hơn mày!]
Dialogue: 0,0:16:51.40,0:16:55.49,Default,,0,0,0,,[Chết tiệt, sao mình có thể\Nthua bởi một thằng nhãi chứ?]
Dialogue: 0,0:16:55.66,0:16:57.99,Default,,0,0,0,,Ryota, chuyền bóng!
Dialogue: 0,0:16:58.10,0:16:58.89,Default,,0,0,0,,Được.
Dialogue: 0,0:17:07.03,0:17:08.40,Default,,0,0,0,,Bắt được bóng rồi!
Dialogue: 0,0:17:09.30,0:17:11.01,Default,,0,0,0,,Hanamichi bắt được bóng rồi!
Dialogue: 0,0:17:11.27,0:17:12.97,Default,,0,0,0,,Tiếp chiêu đây, Shoyo!
Dialogue: 0,0:17:15.44,0:17:21.92,Default,,0,0,0,,Đây là cú ném bình dân của thiên tài thật sự!
Dialogue: 0,0:17:24.82,0:17:25.99,Default,,0,0,0,,Vào nào.
Dialogue: 0,0:17:28.99,0:17:30.16,Default,,0,0,0,,Chết rồi!
Dialogue: 0,0:17:32.26,0:17:34.90,Default,,0,0,0,,Đồ ngu, quá mạnh tay.
Dialogue: 0,0:17:35.26,0:17:36.03,Default,,0,0,0,,Vô dụng!
Dialogue: 0,0:17:36.96,0:17:38.63,Default,,0,0,0,,Bóng của tao!
Dialogue: 0,0:17:48.24,0:17:50.96,Default,,0,0,0,,Vào rồi! Rukawa! Tốt lắm!
Dialogue: 0,0:17:50.99,0:17:52.18,Default,,0,0,0,,Cứu đẹp lắm!
Dialogue: 0,0:17:59.08,0:17:59.92,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:18:08.26,0:18:11.90,Default,,0,0,0,,Rukawa! Rukawa! Yêu cậu!
Dialogue: 0,0:18:12.88,0:18:16.24,Default,,0,0,0,,Lợi hại quá, Rukawa!
Dialogue: 0,0:18:17.14,0:18:18.24,Default,,0,0,0,,Lại nữa rồi.
Dialogue: 0,0:18:19.44,0:18:23.24,Default,,0,0,0,,Mình... mình là thiên tài\Nnhưng lại phạm lỗi sai như thế!
Dialogue: 0,0:18:23.31,0:18:26.56,Default,,0,0,0,,Đồ ngốc, giành được cơ hội\Nthì phải phát huy như bình thường mới phải.
Dialogue: 0,0:18:26.71,0:18:29.00,Default,,0,0,0,,Uổng công tôi chuyền bóng cho cậu.
Dialogue: 0,0:18:29.09,0:18:33.12,Default,,0,0,0,,Cho thằng Rukawa ăn hời, không hiểu luôn!
Dialogue: 0,0:18:33.12,0:18:34.36,Default,,0,0,0,,Đúng đấy, đúng đấy!
Dialogue: 0,0:18:36.49,0:18:41.48,Default,,0,0,0,,Rukawa! Mày đừng có lên mặt, vừa nãy\Ntao trượt tay nên mày mới có cơ hội thôi!
Dialogue: 0,0:18:41.65,0:18:42.38,Default,,0,0,0,,Đồ ngu!
Dialogue: 0,0:18:43.28,0:18:43.79,Default,,0,0,0,,Đồ ngốc!
Dialogue: 0,0:18:45.42,0:18:47.98,Default,,0,0,0,,Hanamichi, vừa nãy là chuyền bóng sao?
Dialogue: 0,0:18:48.09,0:18:49.28,Default,,0,0,0,,Là chuyền cho Rukawa đúng không?
Dialogue: 0,0:18:49.29,0:18:50.76,Default,,0,0,0,,Im miệng cho tao! Chết tiệt!
Dialogue: 0,0:18:52.73,0:18:57.27,Default,,0,0,0,,[Tình hình không ổn rồi, cách nhau tận hai quả.]
Dialogue: 0,0:18:57.90,0:19:01.64,Default,,0,0,0,,[Mình phải nghĩ cách,\Nkhông được thua thằng đấy!]
Dialogue: 0,0:19:01.77,0:19:04.71,Default,,0,0,0,,Này Hanamichi, đừng tự mình tỏ vẻ đấy.
Dialogue: 0,0:19:04.83,0:19:06.07,Default,,0,0,0,,Biết rồi!
Dialogue: 0,0:19:06.17,0:19:08.78,Default,,0,0,0,,- Mọi người cố lên nào!\N- Rõ!
Dialogue: 0,0:19:09.21,0:19:11.53,Default,,0,0,0,,Chặn họ thêm một lần nữa!
Dialogue: 0,0:19:12.36,0:19:15.02,Default,,0,0,0,,Phòng thủ...
Dialogue: 0,0:19:15.05,0:19:17.93,Default,,0,0,0,,Shoyo...
Dialogue: 0,0:19:19.26,0:19:25.06,Default,,0,0,0,,Xem ra Shohoku đã lấy lại được phong độ,\Nbây giờ Shohoku mới bắt đầu.
Dialogue: 0,0:19:25.85,0:19:31.80,Default,,0,0,0,,[Nhưng Rukawa\Nđã phá vỡ cách tấn công của Shoyo.]
Dialogue: 0,0:19:33.18,0:19:37.37,Default,,0,0,0,,[Trong trận đấu tập, cậu ta cũng cản được\Nlối tấn công mãnh liệt của Uozumi và Sendoh,]
Dialogue: 0,0:19:37.54,0:19:42.61,Default,,0,0,0,,[đối đầu với hai em ấy,\Ncó thể nói là một nhân vật mới xuất sắc.]
Dialogue: 0,0:19:45.96,0:19:51.10,Default,,0,0,0,,[Không có một học sinh lớp 10 thứ hai nào\Ngây được tiếng vang lớn như vậy.]
Dialogue: 0,0:19:51.87,0:19:55.94,Default,,0,0,0,,[Tôi có một dự cảm, cậu ta sẽ trở thành\Nngôi sao lớn trong bóng rổ.]
Dialogue: 0,0:19:56.97,0:20:01.14,Default,,0,0,0,,[Rukawa thật sự quá đáng sợ,\Nmình không có điều kiện như cậu ta.]
Dialogue: 0,0:20:01.88,0:20:06.35,Default,,0,0,0,,[Mình tập luyện cả đời cũng không thể\Ntrở thành một tuyển thủ như Rukawa.]
Dialogue: 0,0:20:07.02,0:20:09.02,Default,,0,0,0,,[Mình chỉ cao có 165cm.]
Dialogue: 0,0:20:10.62,0:20:14.66,Default,,0,0,0,,Đối mặt với một đối thủ cao như vậy,\Ntrông số 7 thật nhỏ bé.
Dialogue: 0,0:20:15.52,0:20:17.46,Default,,0,0,0,,Là số 7 của Shohoku sao?
Dialogue: 0,0:20:17.76,0:20:21.46,Default,,0,0,0,,Với chiều cao của số 7, muốn kèm số 9,\Nchiều cao quá khác biệt nhau.
Dialogue: 0,0:20:21.56,0:20:25.87,Default,,0,0,0,,Shohoku phải dùng số 5 mới đúng.
Dialogue: 0,0:20:29.27,0:20:30.42,Default,,0,0,0,,Miyagi!
Dialogue: 0,0:20:34.61,0:20:37.56,Default,,0,0,0,,[Đổ mồ hôi cả người rồi,\Ncũng khởi động xong rồi.]
Dialogue: 0,0:20:37.93,0:20:42.00,Default,,0,0,0,,[Bây giờ bắt đầu, mình phải dùng\Nnăng lực thật sự của mình thôi!]
Dialogue: 0,0:20:42.93,0:20:43.93,Default,,0,0,0,,Đến nào, đến nào!
Dialogue: 0,0:20:44.30,0:20:46.27,Default,,0,0,0,,Đến đây nào, Shoyo!
Dialogue: 0,0:20:48.34,0:20:50.82,Default,,0,0,0,,[Biểu hiện của Rukawa Kaede đã trở thành động lực\Nđể phản công, cảm giác bị động đã không còn nữa.]
Dialogue: 0,0:20:50.94,0:20:54.72,Default,,0,0,0,,[Khí thế của Shohoku cũng hùng hồn hơn.]
Dialogue: 0,0:20:55.48,0:20:58.75,Default,,0,0,0,,[Với đội ngũ cao kều của Shoyo,]
Dialogue: 0,0:20:58.90,0:21:01.38,Default,,0,0,0,,[Ryota cũng bùng cháy ý chí chiến đấu hơn.]
Dialogue: 0,0:21:08.52,0:21:16.16,Default,,0,0,0,,♫ Cô đơn lẻ bóng, chơi vơi nơi thành thị lớn ♫
Dialogue: 0,0:21:17.85,0:21:24.93,Default,,0,0,0,,♫ Như một chai bia rỗng bị người ta vứt đi ♫
Dialogue: 0,0:21:24.99,0:21:33.97,Default,,0,0,0,,♫ Nếu buộc phải tìm hiểu mọi thứ của nhau ♫
Dialogue: 0,0:21:34.20,0:21:41.94,Default,,0,0,0,,♫ Mới gọi là yêu,\Nthì chi bằng ngủ một giấc vĩnh hằng ♫
Dialogue: 0,0:21:42.79,0:21:52.77,Default,,0,0,0,,♫ Đến tận cùng của thế giới\Ncũng không muốn xa cậu ♫
Dialogue: 0,0:21:52.78,0:22:01.22,Default,,0,0,0,,♫ Từng cầu nguyện\Ntrong biết bao nhiêu đêm tối ♫
Dialogue: 0,0:22:01.44,0:22:10.88,Default,,0,0,0,,♫ Rằng thời gian không trở lại ơi,\Nvì sao lại lóa mắt thế ♫
Dialogue: 0,0:22:10.90,0:22:19.26,Default,,0,0,0,,♫ Xát muối thêm vào trái tim\Nvốn đã tiều tụy quá đỗi này ♫
Dialogue: 0,0:22:19.96,0:22:30.98,Default,,0,0,0,,♫ Nỗi nhớ mịt mờ trong đêm bi kịch này ♫
Dialogue: 0,0:22:36.45,0:22:37.89,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:39.73,0:22:42.37,Default,,0,0,0,,Thiên tài Sakuragi cuối cùng cũng ghi điểm!
Dialogue: 0,0:22:42.83,0:22:47.04,Default,,0,0,0,,Hai điểm này chắc chắn\Nsẽ xoay ngược tình thế của trận đấu!
Dialogue: 0,0:22:47.10,0:22:49.31,Default,,0,0,0,,Hậu vệ dẫn bóng Miyagi Ryota của Shohoku.
