Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:04.47,0:00:11.17,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:28.96,0:00:35.37,Default,,0,0,0,,♫ Ánh mặt trời chói rọi phía sau lưng,\Ntôi bước trên con đường này ♫
Dialogue: 0,0:00:35.71,0:00:41.52,Default,,0,0,0,,♫ Cũng như thường lệ, lại bị vỗ vai ♫
Dialogue: 0,0:00:42.45,0:00:48.69,Default,,0,0,0,,♫ Cậu là nữ thần của tôi, không có lý do gì cả ♫
Dialogue: 0,0:00:49.19,0:00:53.93,Default,,0,0,0,,♫ Nhưng lại chưa từng khoác lấy tay tôi ♫
Dialogue: 0,0:00:54.40,0:01:00.54,Default,,0,0,0,,♫ Không biết từ lúc nào,\Nánh mắt đã không thể rời đi ♫
Dialogue: 0,0:01:01.14,0:01:06.87,Default,,0,0,0,,♫ Không buông ra, không do dự,\Nđiên cuồng vì cậu ♫
Dialogue: 0,0:01:07.61,0:01:14.32,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:01:14.75,0:01:20.92,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:01:21.19,0:01:28.13,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm tiến lên một bước ♫
Dialogue: 0,0:01:28.63,0:01:35.67,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:01:51.12,0:01:54.36,Default,,0,0,0,,[Trong trận đấu quyết liệt\Ntranh giành tư cách vào trận chung kết,]
Dialogue: 0,0:01:54.52,0:01:56.06,Default,,0,0,0,,[Mitsui bắt đầu lộ vẻ mệt mỏi,]
Dialogue: 0,0:01:56.62,0:01:59.05,Default,,0,0,0,,[thêm việc Hasegawa một mực kèm người\Nvào nửa trận sau,]
Dialogue: 0,0:01:59.30,0:02:01.37,Default,,0,0,0,,[nên càng kiệt sức hơn.]
Dialogue: 0,0:02:13.35,0:02:13.87,Default,,0,0,0,,[Nhưng...]
Dialogue: 0,0:02:15.22,0:02:16.12,Default,,0,0,0,,Đừng chạm vào tôi!
Dialogue: 0,0:02:23.79,0:02:27.60,Default,,0,0,0,,[Chỉ khi gặp tình trạng như vậy\Nmới khiến mình bùng nổ.]
Dialogue: 0,0:02:32.97,0:02:36.30,Default,,0,0,0,,[Mitsui lấy lại tự tin,]
Dialogue: 0,0:02:36.34,0:02:38.74,Default,,0,0,0,,[thắp sáng ngọn lửa nghị lực không chịu thua,\Nphát huy hết sức bột phát]
Dialogue: 0,0:02:39.14,0:02:42.04,Default,,0,0,0,,[ném quả ba điểm khiến mọi người kinh ngạc,\Ncứu vãn tình thế.]
Dialogue: 0,0:02:56.16,0:02:58.26,Default,,0,0,0,,[Khi nửa trận sau chỉ còn bốn phút,\Nđội bóng rổ Shohoku]
Dialogue: 0,0:02:58.36,0:03:02.03,Default,,0,0,0,,[đã đuổi kịp tỷ số 58-55,\Nchỉ thua ba điểm thôi.]
Dialogue: 0,0:03:04.53,0:03:06.70,Default,,0,0,0,,Xem ra cậu vẫn còn dũng mãnh lắm nhỉ.
Dialogue: 0,0:03:09.04,0:03:11.21,Default,,0,0,0,,Vậy còn cậu thì sao? Akagi.
Dialogue: 0,0:03:11.55,0:03:12.45,Default,,0,0,0,,Cho đến bây giờ,
Dialogue: 0,0:03:12.48,0:03:14.96,Default,,0,0,0,,tôi vẫn chưa nhìn thấy\Ncậu phát huy sức mạnh dũng mãnh.
Dialogue: 0,0:03:15.39,0:03:16.42,Default,,0,0,0,,Nói bậy.
Dialogue: 0,0:03:20.93,0:03:29.14,Default,,0,0,0,,[Có nguy cơ rời sân?! Hanamichi gặp nguy hiểm!]
Dialogue: 0,0:03:23.09,0:03:26.50,Default,,0,0,0,,[Có nguy cơ rời sân?! Hanamichi gặp nguy hiểm!]
Dialogue: 0,0:03:38.57,0:03:40.34,Default,,0,0,0,,[Chỉ mỗi mình mình không được chú ý.]
Dialogue: 0,0:03:40.49,0:03:42.12,Default,,0,0,0,,[Mình phải nghĩ cách mới được.]
Dialogue: 0,0:03:42.47,0:03:43.37,Default,,0,0,0,,Sao mày còn ở đây?
Dialogue: 0,0:03:44.98,0:03:45.94,Default,,0,0,0,,Sao mày vẫn chưa rời sân?
Dialogue: 0,0:03:48.19,0:03:51.86,Default,,0,0,0,,[Mình chắc chắn phải tìm cơ hội úp rổ ghi điểm!]
Dialogue: 0,0:03:52.56,0:03:54.38,Default,,0,0,0,,[Chỉ cần úp rổ được.]
Dialogue: 0,0:03:55.93,0:03:59.33,Default,,0,0,0,,[Nhưng mình đã phạm lỗi bốn lần rồi.]
Dialogue: 0,0:03:59.97,0:04:02.27,Default,,0,0,0,,Hay, có hy vọng, chúng ta có hy vọng rồi.
Dialogue: 0,0:04:02.30,0:04:03.42,Default,,0,0,0,,Chỉ thiếu ba điểm nữa thôi.
Dialogue: 0,0:04:03.54,0:04:06.67,Default,,0,0,0,,Đánh bại Shoyo, vào vòng chung kết!
Dialogue: 0,0:04:07.84,0:04:09.63,Default,,0,0,0,,Mitsui không hổ là Mitsui,
Dialogue: 0,0:04:09.98,0:04:12.21,Default,,0,0,0,,chúng ta phải thật cẩn thận\Nvới cú ném ba điểm của anh ta mới được.
Dialogue: 0,0:04:13.55,0:04:14.82,Default,,0,0,0,,[Mitsui Hisashi,]
Dialogue: 0,0:04:15.58,0:04:17.69,Default,,0,0,0,,[cậu ta vẫn còn nguyên thực lực\Ncủa thành viên giỏi nhất trước đây.]
Dialogue: 0,0:04:18.89,0:04:21.93,Default,,0,0,0,,Lúc vừa ném đã biết bóng sẽ vào rổ.
Dialogue: 0,0:04:22.72,0:04:23.99,Default,,0,0,0,,Cậu ta cũng tự tin thật,\Nkhông đơn giản chút nào.
Dialogue: 0,0:04:24.69,0:04:26.26,Default,,0,0,0,,Còn lại chưa đến bốn phút,
Dialogue: 0,0:04:26.46,0:04:28.83,Default,,0,0,0,,lần này ai thắng ai thua sẽ khó đoán lắm đây.
Dialogue: 0,0:04:29.03,0:04:30.53,Default,,0,0,0,,Đáp án chỉ có một,
Dialogue: 0,0:04:31.03,0:04:32.67,Default,,0,0,0,,kẻ thắng làm vua.
Dialogue: 0,0:04:35.40,0:04:36.36,Default,,0,0,0,,Chỉ thiếu ba điểm, Mitsui.
Dialogue: 0,0:04:36.38,0:04:39.24,Default,,0,0,0,,Ném thêm quả ba điểm nữa là san bằng tỷ số rồi.
Dialogue: 0,0:04:39.34,0:04:41.61,Default,,0,0,0,,Mitsui ném thêm quả nữa, Mitsui.
Dialogue: 0,0:04:41.68,0:04:43.35,Default,,0,0,0,,Lúc trước làm người ghét cay ghét đắng,
Dialogue: 0,0:04:43.45,0:04:44.72,Default,,0,0,0,,bây giờ tôi yêu anh ta chết mất!
Dialogue: 0,0:04:46.82,0:04:51.23,Default,,0,0,0,,Mitsui cố lên!
Dialogue: 0,0:04:51.73,0:04:53.59,Default,,0,0,0,,Mọi người cố lên nào!
Dialogue: 0,0:04:53.61,0:04:56.64,Default,,0,0,0,,Mitsui cố lên!
Dialogue: 0,0:04:57.02,0:05:00.58,Default,,0,0,0,,Mitsui cố lên!
Dialogue: 0,0:05:00.60,0:05:03.92,Default,,0,0,0,,Mitsui cố lên!
Dialogue: 0,0:05:03.95,0:05:07.14,Default,,0,0,0,,Mitsui cố lên!
Dialogue: 0,0:05:08.68,0:05:09.75,Default,,0,0,0,,Mấy tên đó.
Dialogue: 0,0:05:09.91,0:05:11.28,Default,,0,0,0,,Bọn này cũng đến đây.
Dialogue: 0,0:05:12.28,0:05:13.82,Default,,0,0,0,,Chúng ta không thể thua được!
Dialogue: 0,0:05:14.03,0:05:16.15,Default,,0,0,0,,Rukawa! Rukawa!
Dialogue: 0,0:05:16.18,0:05:21.62,Default,,0,0,0,,Mình yêu cậu, Rukawa!
Dialogue: 0,0:05:21.71,0:05:22.74,Default,,0,0,0,,Đúng thật là.
Dialogue: 0,0:05:23.24,0:05:25.71,Default,,0,0,0,,Đội cổ vũ của Shohoku\Nkhông biết điều chút nào.
Dialogue: 0,0:05:26.38,0:05:27.72,Default,,0,0,0,,Rốt cuộc ai thắng ai thua,
Dialogue: 0,0:05:28.42,0:05:29.78,Default,,0,0,0,,bây giờ tỷ lệ thắng thua mỗi bên một nửa.
Dialogue: 0,0:05:30.55,0:05:33.62,Default,,0,0,0,,Sakuragi phụ trách bắt bóng bật bảng\Nđã phạm lỗi bốn lần rồi.
Dialogue: 0,0:05:33.65,0:05:35.49,Default,,0,0,0,,Shohoku vẫn còn phải chiến đấu gian khổ đây.
Dialogue: 0,0:05:36.32,0:05:38.66,Default,,0,0,0,,Dù đội nào trong số họ vào trận chung kết,
Dialogue: 0,0:05:39.29,0:05:40.76,Default,,0,0,0,,tóm lại, kẻ thắng\Nchắc chắn sẽ là chúng ta thôi.
Dialogue: 0,0:05:40.86,0:05:42.40,Default,,0,0,0,,Kainan là đội mạnh nhất!
Dialogue: 0,0:05:43.10,0:05:44.50,Default,,0,0,0,,Còn phải nói à!
Dialogue: 0,0:05:51.24,0:05:53.17,Default,,0,0,0,,Làm gì đấy làm gì đấy, tên phạm lỗi bốn lần.
Dialogue: 0,0:05:54.08,0:05:54.94,Default,,0,0,0,,Đáng ghét!
Dialogue: 0,0:05:56.44,0:05:58.81,Default,,0,0,0,,Tôi sẽ không để tên bị đuổi khỏi sân\Ngiành được bóng của tôi đâu.
Dialogue: 0,0:05:58.96,0:05:59.81,Default,,0,0,0,,[Cái gì?]
Dialogue: 0,0:06:00.51,0:06:01.92,Default,,0,0,0,,Sakuragi, đừng lùi bước!
Dialogue: 0,0:06:02.95,0:06:04.65,Default,,0,0,0,,[Sakuragi đã phạm lỗi bốn lần,]
Dialogue: 0,0:06:05.02,0:06:06.45,Default,,0,0,0,,[nếu phạm lỗi thêm lần nữa\Nsẽ bị đuổi ra khỏi sân.]
Dialogue: 0,0:06:08.32,0:06:11.36,Default,,0,0,0,,[Shoyo đã nhìn ra chuyện\Ncậu ấy không thể tích cực phòng thủ,]
Dialogue: 0,0:06:12.19,0:06:14.06,Default,,0,0,0,,[họ sẽ không bỏ qua sơ hở này đâu!]
Dialogue: 0,0:06:24.42,0:06:25.13,Default,,0,0,0,,Hay lắm!
Dialogue: 0,0:06:26.57,0:06:27.28,Default,,0,0,0,,[Mình giành được rồi.]
Dialogue: 0,0:06:39.49,0:06:40.32,Default,,0,0,0,,Đáng ghét!
Dialogue: 0,0:06:47.50,0:06:48.73,Default,,0,0,0,,Sakuragi, mau cản cậu ta lại!
Dialogue: 0,0:06:58.61,0:06:59.71,Default,,0,0,0,,Vào rồi!
Dialogue: 0,0:07:00.68,0:07:01.74,Default,,0,0,0,,Làm tốt lắm, Takano.
Dialogue: 0,0:07:01.91,0:07:05.18,Default,,0,0,0,,Takano! Takano! Takano!
Dialogue: 0,0:07:05.20,0:07:08.69,Default,,0,0,0,,Takano! Takano! Takano!
Dialogue: 0,0:07:08.71,0:07:12.17,Default,,0,0,0,,Takano! Takano! Takano!
Dialogue: 0,0:07:12.19,0:07:17.19,Default,,0,0,0,,Takano! Takano! Takano...
Dialogue: 0,0:07:17.69,0:07:19.13,Default,,0,0,0,,[Quả không hổ là Fujima,]
Dialogue: 0,0:07:19.49,0:07:21.20,Default,,0,0,0,,[nhanh chóng cướp bóng\Nrồi lập tức chuyền bóng.]
Dialogue: 0,0:07:22.16,0:07:23.66,Default,,0,0,0,,[Shohoku phải đối phó thế nào đây?]
Dialogue: 0,0:07:24.33,0:07:27.13,Default,,0,0,0,,[Sơ hở này khá lớn.]
Dialogue: 0,0:07:37.31,0:07:38.78,Default,,0,0,0,,[Cậu ấy sợ sẽ phạm lỗi.]
Dialogue: 0,0:07:39.55,0:07:40.68,Default,,0,0,0,,[Nhưng bây giờ]
Dialogue: 0,0:07:41.08,0:07:43.58,Default,,0,0,0,,[không thể thiếu\Nmột sức chiến đấu như Sakuragi được.]
Dialogue: 0,0:07:46.05,0:07:48.26,Default,,0,0,0,,[Shoyo ngoài Fujima ra,]
Dialogue: 0,0:07:48.28,0:07:50.06,Default,,0,0,0,,[mọi người đều cao 190cm trở lên.]
Dialogue: 0,0:07:50.59,0:07:52.49,Default,,0,0,0,,[Mất đi phòng thủ Sakuragi có sức bật tốt,]
Dialogue: 0,0:07:52.66,0:07:54.43,Default,,0,0,0,,[việc đối kháng trên cao sẽ mất cân bằng,]
Dialogue: 0,0:07:54.66,0:07:56.76,Default,,0,0,0,,[khiến cho cả đội\Nbị đối phương đánh cho tan tác.]
Dialogue: 0,0:07:59.97,0:08:01.60,Default,,0,0,0,,Các cậu biết không, Sakuragi là một sơ hở.
Dialogue: 0,0:08:02.20,0:08:03.64,Default,,0,0,0,,Cứ nhắm vào Sakuragi mà ra tay.
Dialogue: 0,0:08:06.47,0:08:09.64,Default,,0,0,0,,[Mình... mình là sơ hở của hàng thủ.]
Dialogue: 0,0:08:11.51,0:08:12.58,Default,,0,0,0,,Mọi người thủ vững!
Dialogue: 0,0:08:13.05,0:08:14.18,Default,,0,0,0,,Giành bóng!
Dialogue: 0,0:08:16.25,0:08:16.95,Default,,0,0,0,,Đến đây!
Dialogue: 0,0:08:18.85,0:08:19.95,Default,,0,0,0,,Hanamichi.
Dialogue: 0,0:08:21.52,0:08:22.46,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:08:27.16,0:08:29.23,Default,,0,0,0,,Đáng ghét, đáng ghét!
Dialogue: 0,0:08:40.64,0:08:41.54,Default,,0,0,0,,Lại là Mitsui!
Dialogue: 0,0:08:42.44,0:08:43.88,Default,,0,0,0,,Lần này chắc chắn phải cản cậu ta lại!
Dialogue: 0,0:08:58.36,0:08:59.86,Default,,0,0,0,,[Tuy không chạm trúng bóng,]
Dialogue: 0,0:08:59.90,0:09:01.40,Default,,0,0,0,,[nhưng đã khiến cậu ta mất cân bằng rồi.]
Dialogue: 0,0:09:01.75,0:09:02.38,Default,,0,0,0,,[Đừng có vào!]
Dialogue: 0,0:09:10.00,0:09:11.07,Default,,0,0,0,,Vào nữa rồi!
Dialogue: 0,0:09:11.27,0:09:12.44,Default,,0,0,0,,Tuyệt vời quá!
Dialogue: 0,0:09:12.84,0:09:16.14,Default,,0,0,0,,Hay quá! Bốn lần liên tiếp\Nném quả ba điểm, giỏi quá!
Dialogue: 0,0:09:16.31,0:09:17.95,Default,,0,0,0,,Mitsui, anh tuyệt vời quá!
Dialogue: 0,0:09:18.35,0:09:22.75,Default,,0,0,0,,Mitsui cố lên!
Dialogue: 0,0:09:24.52,0:09:26.85,Default,,0,0,0,,Không hổ là thành viên\Ncó giá trị nhất trường cấp hai.
Dialogue: 0,0:09:27.49,0:09:29.12,Default,,0,0,0,,Mitsui đáng sợ thật.
Dialogue: 0,0:09:29.56,0:09:32.44,Default,,0,0,0,,Cùng là tay ném ba điểm,
Dialogue: 0,0:09:32.46,0:09:34.83,Default,,0,0,0,,cậu cảm thấy Mitsui Hisashi thế nào?
Dialogue: 0,0:09:36.16,0:09:38.01,Default,,0,0,0,,Cậu ta chơi rất lưu loát.
Dialogue: 0,0:09:38.04,0:09:39.90,Default,,0,0,0,,Tôi nghĩ có lẽ sẽ càng ném càng chuẩn.
Dialogue: 0,0:09:40.77,0:09:45.04,Default,,0,0,0,,Chỉ cần vào một quả là không ngừng được.
Dialogue: 0,0:09:45.07,0:09:46.37,Default,,0,0,0,,Cũng xem như cùng loại với tôi.
Dialogue: 0,0:09:51.11,0:09:52.05,Default,,0,0,0,,Thế nào?
Dialogue: 0,0:09:52.95,0:09:55.48,Default,,0,0,0,,Chẳng phải cậu nói\Ntôi chỉ ghi được năm điểm thôi sao?
Dialogue: 0,0:09:57.02,0:09:58.65,Default,,0,0,0,,Bây giờ tôi đã ghi được 20 điểm rồi,
Dialogue: 0,0:09:59.32,0:10:00.52,Default,,0,0,0,,hơn nữa tôi còn sẽ ghi điểm tiếp.
Dialogue: 0,0:10:11.10,0:10:12.33,Default,,0,0,0,,Nào, chuyền qua đây!
Dialogue: 0,0:10:17.44,0:10:19.87,Default,,0,0,0,,Shoyo định ra tay với Sakuragi
Dialogue: 0,0:10:19.91,0:10:22.11,Default,,0,0,0,,đang lo sợ vì đã phạm lỗi bốn lần sao?
Dialogue: 0,0:10:23.14,0:10:23.88,Default,,0,0,0,,Làm vậy cũng khó trách.
Dialogue: 0,0:10:25.08,0:10:26.08,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:10:27.05,0:10:28.40,Default,,0,0,0,,Đáng ghét!
Dialogue: 0,0:10:28.43,0:10:32.22,Default,,0,0,0,,[Dám nhắm vào nhược điểm không dám ra tay\Nvì đã phạm lỗi bốn lần của mình.]
Dialogue: 0,0:10:32.82,0:10:33.55,Default,,0,0,0,,[Nhưng]
Dialogue: 0,0:10:34.26,0:10:37.11,Default,,0,0,0,,[rõ ràng mình biết ý đồ của anh ta\Nnhưng vẫn không dám ra tay.]
Dialogue: 0,0:10:37.14,0:10:39.43,Default,,0,0,0,,[Đáng ghét!]
Dialogue: 0,0:10:43.66,0:10:45.63,Default,,0,0,0,,Nếu cậu có cách ngăn cản tôi thì cứ thử xem.
Dialogue: 0,0:10:52.11,0:10:54.61,Default,,0,0,0,,Cậu cứ rụt rè sợ hãi làm gì vậy Sakuragi?
Dialogue: 0,0:11:05.72,0:11:06.95,Default,,0,0,0,,Xem tôi đây!
Dialogue: 0,0:11:26.67,0:11:27.54,Default,,0,0,0,,Xem tôi đây!
Dialogue: 0,0:11:43.79,0:11:46.06,Default,,0,0,0,,Số 11 đội màu trắng phạm lỗi.
Dialogue: 0,0:11:46.19,0:11:47.06,Default,,0,0,0,,Rukawa.
Dialogue: 0,0:11:47.06,0:11:48.63,Default,,0,0,0,,Cản hay lắm!
Dialogue: 0,0:11:48.76,0:11:50.33,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:11:51.10,0:11:52.67,Default,,0,0,0,,Nhóc đáng ghét!
Dialogue: 0,0:11:55.30,0:11:56.30,Default,,0,0,0,,Cậu không sao chứ?
Dialogue: 0,0:11:56.50,0:11:57.30,Default,,0,0,0,,Không sao.
Dialogue: 0,0:12:01.41,0:12:02.51,Default,,0,0,0,,[Rukawa.]
Dialogue: 0,0:12:03.58,0:12:04.45,Default,,0,0,0,,Cái tên Rukawa đó
Dialogue: 0,0:12:04.85,0:12:08.45,Default,,0,0,0,,đã biết đối phương muốn tấn công\Nvào điểm yếu của Sakuragi từ lâu rồi.
Dialogue: 0,0:12:10.21,0:12:11.28,Default,,0,0,0,,Đáng tiếc quá.
Dialogue: 0,0:12:13.28,0:12:14.22,Default,,0,0,0,,[Sakuragi.]
Dialogue: 0,0:12:16.25,0:12:17.18,Default,,0,0,0,,Phạt hai quả.
Dialogue: 0,0:12:34.20,0:12:35.74,Default,,0,0,0,,Văng ra ngoài rồi.
Dialogue: 0,0:12:37.57,0:12:40.41,Default,,0,0,0,,Không sao không sao, còn một quả nữa.
Dialogue: 0,0:12:49.48,0:12:52.05,Default,,0,0,0,,- Bắt bóng bật bảng đi!\N- Được.
Dialogue: 0,0:13:05.00,0:13:05.60,Default,,0,0,0,,Đừng vào mà!
Dialogue: 0,0:13:12.45,0:13:13.40,Default,,0,0,0,,Bóng bật bảng là của tôi!
Dialogue: 0,0:13:22.35,0:13:23.07,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:13:25.65,0:13:26.32,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:13:27.92,0:13:28.89,Default,,0,0,0,,Mau cho Mitsui!
Dialogue: 0,0:13:28.89,0:13:30.32,Default,,0,0,0,,- Mau lên!\N- Mau tấn công!
Dialogue: 0,0:13:41.64,0:13:42.44,Default,,0,0,0,,Fujima!
Dialogue: 0,0:13:43.47,0:13:44.71,Default,,0,0,0,,Mitsui, mau đuổi theo!
Dialogue: 0,0:13:54.95,0:13:57.95,Default,,0,0,0,,[Mình không thể thua Shoyo được!]
Dialogue: 0,0:14:00.92,0:14:04.09,Default,,0,0,0,,Bây giờ bỏ cuộc\Nnghĩa là kết thúc trận đấu sớm.
Dialogue: 0,0:14:07.83,0:14:14.50,Default,,0,0,0,,Em muốn,\Nem muốn được chơi bóng rổ lần nữa.
Dialogue: 0,0:14:23.14,0:14:23.68,Default,,0,0,0,,Đến đây!
Dialogue: 0,0:14:24.48,0:14:24.95,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:14:30.59,0:14:31.32,Default,,0,0,0,,Mitsui!
Dialogue: 0,0:14:32.29,0:14:33.45,Default,,0,0,0,,Đàn anh Mitsui!
Dialogue: 0,0:14:33.85,0:14:35.52,Default,,0,0,0,,Giao cho cậu đó, Rukawa!
Dialogue: 0,0:14:54.24,0:14:57.25,Default,,0,0,0,,Hay quá! Hay quá!
Dialogue: 0,0:15:00.38,0:15:01.42,Default,,0,0,0,,Bằng điểm rồi!
Dialogue: 0,0:15:01.72,0:15:05.49,Default,,0,0,0,,Cuối cùng Shohoku cũng san bằng tỷ số rồi,\Ntuyệt quá!
Dialogue: 0,0:15:08.59,0:15:10.12,Default,,0,0,0,,Mitsui, cậu đừng sốt ruột!
Dialogue: 0,0:15:16.00,0:15:18.93,Default,,0,0,0,,Nhiều người đang hoan hô lắm,\Nchắc bóng đã vào rồi đúng không?
Dialogue: 0,0:15:19.83,0:15:20.84,Default,,0,0,0,,Chúng ta đã bằng điểm rồi.
Dialogue: 0,0:15:21.34,0:15:22.40,Default,,0,0,0,,Cú chuyền bóng đó của cậu quá đẹp.
Dialogue: 0,0:15:23.30,0:15:24.61,Default,,0,0,0,,Tất nhiên rồi.
Dialogue: 0,0:15:25.37,0:15:26.74,Default,,0,0,0,,Tiếp theo cứ giao cho tôi.
Dialogue: 0,0:15:33.35,0:15:35.05,Default,,0,0,0,,Rốt cuộc mày đang sợ gì vậy?
Dialogue: 0,0:15:38.39,0:15:40.19,Default,,0,0,0,,Cứ như vậy không giống mày chút nào.
Dialogue: 0,0:15:50.00,0:15:51.20,Default,,0,0,0,,Chơi hay quá!
Dialogue: 0,0:15:51.40,0:15:53.37,Default,,0,0,0,,Tuyệt lắm Mitsui!
Dialogue: 0,0:15:53.57,0:15:55.00,Default,,0,0,0,,Hay quá hay quá, hay quá đi!
Dialogue: 0,0:15:55.40,0:15:59.81,Default,,0,0,0,,Mitsui hay quá!
Dialogue: 0,0:16:02.08,0:16:04.15,Default,,0,0,0,,[Chỉ còn 2 phút 30 giây là kết thúc trận đấu,]
Dialogue: 0,0:16:04.55,0:16:08.12,Default,,0,0,0,,[tỷ số hiện là 60-60, tổng cộng được 20 điểm.]
Dialogue: 0,0:16:08.45,0:16:11.25,Default,,0,0,0,,[Trong đó 15 điểm là cú ném ba điểm.]
Dialogue: 0,0:16:11.99,0:16:14.89,Default,,0,0,0,,[Sau khi thực hiện kỷ lục này,\Ncuối cùng Mitsui đã rời sân.]
Dialogue: 0,0:16:17.79,0:16:19.60,Default,,0,0,0,,Xin lỗi huấn luyện viên.
Dialogue: 0,0:16:20.70,0:16:21.50,Default,,0,0,0,,Mitsui,
Dialogue: 0,0:16:25.93,0:16:27.70,Default,,0,0,0,,có cậu thật tốt.
Dialogue: 0,0:16:29.70,0:16:30.64,Default,,0,0,0,,Huấn luyện viên.
Dialogue: 0,0:16:36.54,0:16:37.31,Default,,0,0,0,,Bằng điểm rồi.
Dialogue: 0,0:16:37.88,0:16:40.65,Default,,0,0,0,,Trước đây còn thua tận 12 điểm.
Dialogue: 0,0:16:42.45,0:16:47.19,Default,,0,0,0,,Mitsui vẫn còn\Nkhả năng ném rổ chính xác của hồi cấp hai,
Dialogue: 0,0:16:48.86,0:16:50.66,Default,,0,0,0,,thêm sức mạnh tinh thần kia nữa.
Dialogue: 0,0:16:51.73,0:16:52.43,Default,,0,0,0,,Huấn luyện viên,
Dialogue: 0,0:16:52.80,0:16:54.87,Default,,0,0,0,,thầy nghĩ kết quả trận đấu này sẽ thế nào?
Dialogue: 0,0:16:56.02,0:17:01.02,Default,,0,0,0,,Tiếp theo sẽ là trận chiến\Nvượt cả phạm trù kỹ thuật bóng rổ đây,
Dialogue: 0,0:17:02.92,0:17:06.46,Default,,0,0,0,,trận đấu sức mạnh tinh thần\Ncủa Shohoku và Shoyo.
Dialogue: 0,0:17:07.86,0:17:10.56,Default,,0,0,0,,Dù ai thắng ai thua trong trận đấu này,
Dialogue: 0,0:17:11.73,0:17:13.63,Default,,0,0,0,,cũng đều không có người thua.
Dialogue: 0,0:17:16.77,0:17:19.21,Default,,0,0,0,,Shohoku đổi người.
Dialogue: 0,0:17:22.94,0:17:24.78,Default,,0,0,0,,Kogure, tiếp theo nhờ cậu đấy.
Dialogue: 0,0:17:25.18,0:17:25.75,Default,,0,0,0,,Vâng.
Dialogue: 0,0:17:29.25,0:17:31.03,Default,,0,0,0,,Đàn anh Kogure, cố lên nhé!
Dialogue: 0,0:17:33.59,0:17:35.53,Default,,0,0,0,,Bốn Mắt cố lên!
Dialogue: 0,0:17:35.66,0:17:37.55,Default,,0,0,0,,Phần của Mitsui nhờ cả vào anh đấy!
Dialogue: 0,0:17:40.70,0:17:42.75,Default,,0,0,0,,Hình như bầu không khí hơi lạ nhỉ?
Dialogue: 0,0:17:45.72,0:17:46.82,Default,,0,0,0,,là Rukawa và...
Dialogue: 0,0:17:47.70,0:17:51.40,Default,,0,0,0,,Rốt cuộc hai người Rukawa\Nvà Sakuragi làm sao vậy?
Dialogue: 0,0:17:52.13,0:17:54.80,Default,,0,0,0,,Chẳng lẽ hai người họ sắp cãi nhau sao?
Dialogue: 0,0:17:55.74,0:17:56.40,Default,,0,0,0,,Sao có thể chứ?
Dialogue: 0,0:17:57.47,0:17:59.77,Default,,0,0,0,,Chuyện không thể xảy ra nào\Nthì Hanamichi cũng làm được.
Dialogue: 0,0:17:59.77,0:18:00.98,Default,,0,0,0,,Đúng đó.
Dialogue: 0,0:18:03.18,0:18:06.01,Default,,0,0,0,,Không thể nào, sao lại có chuyện này chứ?
Dialogue: 0,0:18:17.46,0:18:19.69,Default,,0,0,0,,[Rốt cuộc mày đang sợ cái gì?]
Dialogue: 0,0:18:26.53,0:18:28.34,Default,,0,0,0,,[Như vậy không giống mày chút nào cả.]
Dialogue: 0,0:18:29.83,0:18:34.81,Default,,0,0,0,,Đáng ghét, đáng ghét!
Dialogue: 0,0:18:40.01,0:18:42.81,Default,,0,0,0,,Tiếng gì vậy?
Dialogue: 0,0:18:43.78,0:18:45.02,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:18:45.95,0:18:47.52,Default,,0,0,0,,Hanamichi!
Dialogue: 0,0:18:48.60,0:18:49.80,Default,,0,0,0,,Sakuragi cậu ấy...
Dialogue: 0,0:18:58.84,0:19:02.91,Default,,0,0,0,,Đập đầu vào bảng rổ!
Dialogue: 0,0:19:04.28,0:19:06.41,Default,,0,0,0,,Cậu ta cứ luôn làm bậy bạ như trước.
Dialogue: 0,0:19:08.02,0:19:10.75,Default,,0,0,0,,Xem ra Sakuragi\Nsẽ dần giống Sakuragi rồi đây.
Dialogue: 0,0:19:11.65,0:19:14.26,Default,,0,0,0,,Mày nói ai đang sợ ai hả?
Dialogue: 0,0:19:14.26,0:19:15.76,Default,,0,0,0,,Tất nhiên đang nói mày đó.
Dialogue: 0,0:19:15.84,0:19:19.32,Default,,0,0,0,,Mày nói gì,\Nchắc chắn tao sẽ không thua mày đâu!
Dialogue: 0,0:19:19.63,0:19:20.80,Default,,0,0,0,,Mày chỉ biết nói miệng thôi.
Dialogue: 0,0:19:23.60,0:19:24.34,Default,,0,0,0,,Lại nữa rồi.
Dialogue: 0,0:19:24.64,0:19:29.14,Default,,0,0,0,,Đến lúc này rồi mà còn biểu diễn đặc sản\Nthi đua về khí thế của Shohoku nữa.
Dialogue: 0,0:19:30.80,0:19:32.25,Default,,0,0,0,,Các cậu đủ chưa?
Dialogue: 0,0:19:33.70,0:19:34.97,Default,,0,0,0,,Các cậu phải nhận rõ
Dialogue: 0,0:19:36.80,0:19:37.91,Default,,0,0,0,,kẻ địch của chúng ta là Shoyo đấy.
Dialogue: 0,0:19:44.25,0:19:46.28,Default,,0,0,0,,Người thắng trận và thách đấu với Kainan
Dialogue: 0,0:19:46.61,0:19:47.72,Default,,0,0,0,,chắc chắn là chúng ta!
Dialogue: 0,0:19:48.05,0:19:50.96,Default,,0,0,0,,Đúng vậy, người giành được hạng nhất\Ncủa trận chung kết
Dialogue: 0,0:19:51.10,0:19:52.24,Default,,0,0,0,,là Shoyo chúng ta!
Dialogue: 0,0:19:53.20,0:19:54.04,Default,,0,0,0,,Nói năng bậy bạ!
Dialogue: 0,0:19:54.96,0:19:55.88,Default,,0,0,0,,Sắp lên rồi!
Dialogue: 0,0:19:59.20,0:20:00.87,Default,,0,0,0,,Tôi chắc chắn phải thắng!
Dialogue: 0,0:20:02.27,0:20:03.59,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:20:07.38,0:20:09.91,Default,,0,0,0,,[Cầu xin các cậu phải thắng đó.]
Dialogue: 0,0:20:12.58,0:20:14.82,Default,,0,0,0,,[Cậu cứ chờ mà xem, Mitsui.]
Dialogue: 0,0:20:17.12,0:20:19.22,Default,,0,0,0,,[Ayako, tôi chắc chắn sẽ thắng!]
Dialogue: 0,0:20:20.56,0:20:21.69,Default,,0,0,0,,[Mình không thể thua được.]
Dialogue: 0,0:20:23.96,0:20:26.89,Default,,0,0,0,,[Phải thắng, chắc chắn phải thắng!]
Dialogue: 0,0:20:31.21,0:20:33.48,Default,,0,0,0,,[Phạm lỗi bốn lần thì sao?]
Dialogue: 0,0:20:34.20,0:20:35.92,Default,,0,0,0,,[Mình là thiên tài mà,]
Dialogue: 0,0:20:35.94,0:20:37.96,Default,,0,0,0,,[chắc chắn không vấn đề gì đâu.]
Dialogue: 0,0:20:43.83,0:20:47.77,Default,,0,0,0,,[Dưới sự quyết tâm của Mitsui, cuối cùng đã giành lại\Nsố điểm đang thua của cho Shohoku,]
Dialogue: 0,0:20:49.30,0:20:51.30,Default,,0,0,0,,[thời gian chỉ còn lại 2 phút 30 giây,]
Dialogue: 0,0:20:52.54,0:20:53.68,Default,,0,0,0,,[đối với Shohoku]
Dialogue: 0,0:20:53.86,0:20:56.02,Default,,0,0,0,,[và cả với Sakuragi Hanamichi,]
Dialogue: 0,0:20:56.27,0:21:00.81,Default,,0,0,0,,[khoảnh khắc quan trọng quyết định\Ncuộc đời bóng rổ của họ đã đến gần rồi.]
Dialogue: 0,0:21:08.55,0:21:16.19,Default,,0,0,0,,♫ Cô đơn lẻ bóng, chơi vơi nơi thành thị lớn ♫
Dialogue: 0,0:21:17.81,0:21:24.89,Default,,0,0,0,,♫ Như một chai bia rỗng bị người ta vứt đi ♫
Dialogue: 0,0:21:24.95,0:21:33.93,Default,,0,0,0,,♫ Nếu buộc phải tìm hiểu mọi thứ của nhau ♫
Dialogue: 0,0:21:34.16,0:21:41.90,Default,,0,0,0,,♫ Mới gọi là yêu,\Nthì chi bằng ngủ một giấc vĩnh hằng ♫
Dialogue: 0,0:21:42.70,0:21:52.68,Default,,0,0,0,,♫ Đến tận cùng của thế giới\Ncũng không muốn xa cậu ♫
Dialogue: 0,0:21:52.75,0:22:01.19,Default,,0,0,0,,♫ Từng cầu nguyện\Ntrong biết bao nhiêu đêm tối ♫
Dialogue: 0,0:22:01.39,0:22:10.83,Default,,0,0,0,,♫ Rằng thời gian không trở lại ơi,\Nvì sao lại lóa mắt thế ♫
Dialogue: 0,0:22:10.85,0:22:19.21,Default,,0,0,0,,♫ Xát muối thêm vào trái tim\Nvốn đã tiều tụy quá đỗi này ♫
Dialogue: 0,0:22:19.97,0:22:30.99,Default,,0,0,0,,♫ Nỗi nhớ mịt mờ trong đêm bi kịch này ♫
Dialogue: 0,0:22:36.17,0:22:37.62,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:39.45,0:22:40.65,Default,,0,0,0,,Bóng bật bảng có tổ hợp cặp đôi người mới
Dialogue: 0,0:22:41.25,0:22:43.09,Default,,0,0,0,,Sakuragi và người mới siêu cấp Rukawa.
Dialogue: 0,0:22:43.79,0:22:47.06,Default,,0,0,0,,Vua bóng bật bảng siêu đỉnh cả tỉnh như mình
Dialogue: 0,0:22:47.16,0:22:50.97,Default,,0,0,0,,sao lại sợ phạm lỗi chứ?
Dialogue: 0,0:22:51.16,0:22:54.30,Default,,0,0,0,,Dựa vào quả bóng này\Nđể Rukawa và đám Shoyo câm mồm.
Dialogue: 0,0:22:54.84,0:22:56.47,Default,,0,0,0,,Đừng sốt ruột dùng người để ngăn cản!
Dialogue: 0,0:22:56.90,0:22:59.25,Default,,0,0,0,,Đừng lo, tên đó không ném vào được đâu!
Dialogue: 0,0:22:59.67,0:23:00.90,Default,,0,0,0,,"Cao thủ bóng rổ."
Dialogue: 0,0:23:01.12,0:23:03.29,Default,,0,0,0,,"Hanamichi - Cú úp rổ nóng bỏng!"
Dialogue: 0,0:23:03.96,0:23:05.14,Default,,0,0,0,,Nhất định đừng bỏ lỡ nhé!
