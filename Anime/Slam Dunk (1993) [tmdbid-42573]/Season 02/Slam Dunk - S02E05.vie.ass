Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:04.60,0:00:11.29,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:29.08,0:00:35.55,Default,,0,0,0,,♫ Ánh mặt trời chói rọi phía sau lưng,\Ntôi bước trên con đường này ♫
Dialogue: 0,0:00:35.81,0:00:41.95,Default,,0,0,0,,♫ Cũng như thường lệ, lại bị vỗ vai ♫
Dialogue: 0,0:00:42.55,0:00:49.05,Default,,0,0,0,,♫ Cậu là nữ thần của tôi, không có lý do gì cả ♫
Dialogue: 0,0:00:49.11,0:00:54.55,Default,,0,0,0,,♫ Nhưng lại chưa từng khoác lấy tay tôi ♫
Dialogue: 0,0:00:54.63,0:01:01.19,Default,,0,0,0,,♫ Không biết từ lúc nào,\Nánh mắt đã không thể rời đi ♫
Dialogue: 0,0:01:01.33,0:01:07.91,Default,,0,0,0,,♫ Không buông ra, không do dự,\Nđiên cuồng vì cậu ♫
Dialogue: 0,0:01:07.93,0:01:14.85,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:01:14.95,0:01:21.41,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:01:21.43,0:01:28.65,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm tiến lên một bước ♫
Dialogue: 0,0:01:28.81,0:01:36.03,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:01:46.98,0:01:50.69,Default,,0,0,0,,[Trận vòng loại đầu tiên giữa các trường\Ncấp ba, đối thủ là trường cấp ba Miuradai.]
Dialogue: 0,0:01:50.79,0:01:54.60,Default,,0,0,0,,[Tuy ở phút đầu của trận đấu, đội bóng\Ntrường Shohoku bị đối phương dẫn trước,]
Dialogue: 0,0:01:55.19,0:01:58.25,Default,,0,0,0,,[nhưng dưới sự công phá của Rukawa,\NMiyagi Ryota và Mitsui,]
Dialogue: 0,0:01:58.35,0:02:00.21,Default,,0,0,0,,[đã nhanh chóng kéo tỷ số lại gần.]
Dialogue: 0,0:02:04.73,0:02:09.43,Default,,0,0,0,,[Sakuragi Hanamichi không chịu thua\Ncũng đã nhận được cơ hội ném phạt.]
Dialogue: 0,0:02:13.85,0:02:16.77,Default,,0,0,0,,[Vì chưa từng tập qua ném phạt,]
Dialogue: 0,0:02:16.87,0:02:21.15,Default,,0,0,0,,[Hanamichi đã rất lo lắng nên không thể\Nném quả đầu tiên, lãng phí đi cơ hội đó.]
Dialogue: 0,0:02:23.98,0:02:25.41,Default,,0,0,0,,[Còn lại quả ném phạt thứ hai,]
Dialogue: 0,0:02:27.10,0:02:31.32,Default,,0,0,0,,[Hanamichi thông minh đột xuất,\Nnghĩ ra chiến thuật bóng bật bảng, nhưng...]
Dialogue: 0,0:02:40.54,0:02:49.11,Default,,0,0,0,,[Kẻ địch mạnh - vũ khí bí mật của Miuradai]
Dialogue: 0,0:02:42.72,0:02:46.29,Default,,0,0,0,,[Kẻ địch mạnh - vũ khí bí mật của Miuradai!]
Dialogue: 0,0:02:51.46,0:02:52.52,Default,,0,0,0,,Thật là đỉnh.
Dialogue: 0,0:02:56.06,0:02:58.51,Default,,0,0,0,,Cậu có thấy pha vừa nãy không? Thật xuất sắc.
Dialogue: 0,0:02:58.60,0:03:01.02,Default,,0,0,0,,- Số 11 là ai vậy?\N- Số 11 của bên nào?
Dialogue: 0,0:03:01.11,0:03:03.53,Default,,0,0,0,,Bên Shohoku đó, nghe đó người đó mới lớp 10.
Dialogue: 0,0:03:03.65,0:03:05.64,Default,,0,0,0,,- Lớp 10 ư?\N- Cậu đang đùa đấy à.
Dialogue: 0,0:03:05.76,0:03:08.02,Default,,0,0,0,,- Nói đùa sao?\N- Thật sao?
Dialogue: 0,0:03:08.13,0:03:09.43,Default,,0,0,0,,Cậu ta lớp 10 đó.
Dialogue: 0,0:03:19.61,0:03:21.55,Default,,0,0,0,,Rukawa.
Dialogue: 0,0:03:22.96,0:03:25.36,Default,,0,0,0,,Mày dám bắt bóng của tao.
Dialogue: 0,0:03:25.54,0:03:27.47,Default,,0,0,0,,Mày cướp đi ánh hào quang thiên tài của tao.
Dialogue: 0,0:03:27.60,0:03:28.83,Default,,0,0,0,,Cái đồ tiểu nhân hèn hạ.
Dialogue: 0,0:03:30.52,0:03:31.71,Default,,0,0,0,,Kệ mày.
Dialogue: 0,0:03:32.35,0:03:35.68,Default,,0,0,0,,Rukawa Kaede đúng là giỏi thật đó.\NCậu ta lớp 10 thật sao?
Dialogue: 0,0:03:37.42,0:03:38.86,Default,,0,0,0,,Không, không dám tin luôn.
Dialogue: 0,0:03:38.97,0:03:42.23,Default,,0,0,0,,So ra thì Sakuragi vẫn còn làm càn như trước.
Dialogue: 0,0:03:42.37,0:03:43.82,Default,,0,0,0,,Thật không biết cậu ta nghĩ gì.
Dialogue: 0,0:03:45.06,0:03:46.15,Default,,0,0,0,,[Sakuragi.]
Dialogue: 0,0:03:47.46,0:03:52.76,Default,,0,0,0,,Cái đồ ngoài ngành, dám cản trở thiên tài\NSakuragi tung chiến thuật bóng bật bảng.
Dialogue: 0,0:03:53.24,0:03:56.09,Default,,0,0,0,,Rukawa,\Nsau này mày không được đến gần tao nữa.
Dialogue: 0,0:03:56.72,0:03:57.70,Default,,0,0,0,,Đồ khùng.
Dialogue: 0,0:03:59.09,0:04:00.53,Default,,0,0,0,,Cậu mới là người ngoài ngành đó.
Dialogue: 0,0:04:02.18,0:04:06.66,Default,,0,0,0,,[Cậu ta đúng là cứ làm bậy,\Nkhông theo quy tắc gì cả.]
Dialogue: 0,0:04:07.25,0:04:08.56,Default,,0,0,0,,Được rồi, tỷ số hòa rồi.
Dialogue: 0,0:04:08.71,0:04:10.42,Default,,0,0,0,,Ngăn cản họ tấn công.
Dialogue: 0,0:04:13.89,0:04:16.51,Default,,0,0,0,,[Thiên tài Sakuragi, vô địch tiền phong.]
Dialogue: 0,0:04:16.85,0:04:20.02,Default,,0,0,0,,[Cậu ta đúng là cứ làm bậy,\Nkhông theo quy tắc gì cả.]
Dialogue: 0,0:04:20.36,0:04:23.30,Default,,0,0,0,,[Nhưng mà những hành động của cậu ta,\Nngày càng giống chơi bóng rổ rồi.]
Dialogue: 0,0:04:23.47,0:04:25.97,Default,,0,0,0,,[Chỉ trong vòng chưa đến một tháng.]
Dialogue: 0,0:04:26.47,0:04:28.91,Default,,0,0,0,,Bây giờ tỷ số chỉ hòa thôi, Murasame, lên đi.
Dialogue: 0,0:04:29.03,0:04:33.47,Default,,0,0,0,,- Đừng hòng.\N- Lại thêm một người cần phải chú ý rồi.
Dialogue: 0,0:04:34.12,0:04:34.85,Default,,0,0,0,,Hikoichi.
Dialogue: 0,0:04:36.25,0:04:38.05,Default,,0,0,0,,Em đang chăm chú xem đây.
Dialogue: 0,0:04:40.04,0:04:41.09,Default,,0,0,0,,Phải quan sát.
Dialogue: 0,0:04:46.69,0:04:47.88,Default,,0,0,0,,Cái tên đáng ghét này.
Dialogue: 0,0:04:48.91,0:04:52.98,Default,,0,0,0,,[Năm ngoái, sau khi thua đội vô địch\Ntrường cấp ba trực thuộc Đại học Kainan,]
Dialogue: 0,0:04:53.07,0:04:56.03,Default,,0,0,0,,[suốt một năm qua, chúng tôi đều nhắm vào\Nđội bóng Kainan mà không ngừng khổ luyện.]
Dialogue: 0,0:04:56.97,0:04:59.53,Default,,0,0,0,,[Sao có thể thua cho đội bóng Shohoku chứ.]
Dialogue: 0,0:05:09.02,0:05:10.93,Default,,0,0,0,,- Cao quá.\N- Cái gì chứ.
Dialogue: 0,0:05:17.67,0:05:18.40,Default,,0,0,0,,Tốt.
Dialogue: 0,0:05:22.51,0:05:24.89,Default,,0,0,0,,- Giỏi quá, xông lên.\N- Mau tấn công.
Dialogue: 0,0:05:27.65,0:05:30.67,Default,,0,0,0,,Mình tuyệt đối sẽ không để\NRukawa Kaede ra oai nữa.
Dialogue: 0,0:05:31.26,0:05:35.42,Default,,0,0,0,,Mình nhất định phải thể hiện tài năng\Ncủa thiên tài Sakuragi.
Dialogue: 0,0:06:04.91,0:06:07.44,Default,,0,0,0,,Vào hai quả liên tục, số 11 mạnh thật đó.
Dialogue: 0,0:06:09.45,0:06:10.78,Default,,0,0,0,,Hay quá, lật ngược tình thế rồi.
Dialogue: 0,0:06:13.84,0:06:16.75,Default,,0,0,0,,Bây giờ chỉ mới bắt đầu dẫn trước thôi,\Nchúng ta phải tiếp tục dẫn trước nữa.
Dialogue: 0,0:06:17.28,0:06:18.84,Default,,0,0,0,,Mạnh hơn cả lời đồn.
Dialogue: 0,0:06:19.65,0:06:20.52,Default,,0,0,0,,Đó chính là...
Dialogue: 0,0:06:20.64,0:06:22.61,Default,,0,0,0,,Đó chính là Rukawa của\Ntrường cấp hai Tomigaoka.
Dialogue: 0,0:06:23.91,0:06:29.82,Default,,0,0,0,,- Rukawa, Rukawa...\N- Rukawa, Rukawa...
Dialogue: 0,0:06:29.95,0:06:31.30,Default,,0,0,0,,[Rukawa Kaede.]
Dialogue: 0,0:06:44.67,0:06:49.36,Default,,0,0,0,,[Nửa trận đầu sắp kết thúc rồi,\Nkhông biết Shohoku đã thắng chưa.]
Dialogue: 0,0:06:50.36,0:06:54.68,Default,,0,0,0,,[Lần trước Sakuragi đã có biểu hiện rất tốt,\Ncơ hội ra sân lần này lại tăng thêm rồi.]
Dialogue: 0,0:06:55.31,0:06:56.26,Default,,0,0,0,,[Còn nữa,]
Dialogue: 0,0:07:00.01,0:07:03.93,Default,,0,0,0,,[Rukawa,\Ncậu ấy nhất định là đẹp trai lắm.]
Dialogue: 0,0:07:04.50,0:07:05.40,Default,,0,0,0,,Akagi.
Dialogue: 0,0:07:07.54,0:07:09.52,Default,,0,0,0,,[Anh cũng cố gắng lắm.]
Dialogue: 0,0:07:09.92,0:07:12.66,Default,,0,0,0,,- Akagi Haruko.\N- Vâng.
Dialogue: 0,0:07:13.42,0:07:16.07,Default,,0,0,0,,Em có biết bây giờ là giờ gì không?
Dialogue: 0,0:07:17.74,0:07:20.15,Default,,0,0,0,,Dạ là tiết toán.
Dialogue: 0,0:07:27.34,0:07:28.50,Default,,0,0,0,,Là tiết tiếng Anh.
Dialogue: 0,0:07:28.99,0:07:30.95,Default,,0,0,0,,Xin... xin lỗi.
Dialogue: 0,0:07:36.39,0:07:39.77,Default,,0,0,0,,Đúng là, không dám tin mà.
Dialogue: 0,0:07:40.60,0:07:45.27,Default,,0,0,0,,[Không dám tin]
Dialogue: 0,0:07:45.80,0:07:47.60,Default,,0,0,0,,Không dám tin luôn.
Dialogue: 0,0:07:49.74,0:07:52.32,Default,,0,0,0,,[Thật là tuyệt vời, úp rổ ba quả liên tục.]
Dialogue: 0,0:07:53.13,0:07:56.43,Default,,0,0,0,,Rukawa giỏi quá đi, không dám tin luôn đó.
Dialogue: 0,0:07:59.07,0:08:00.59,Default,,0,0,0,,Chỉ là cậu nhóc thích phô trương thôi.
Dialogue: 0,0:08:01.04,0:08:03.41,Default,,0,0,0,,Sendoh, anh đi đâu đó?
Dialogue: 0,0:08:03.53,0:08:05.94,Default,,0,0,0,,Pha vừa nãy của Rukawa rất xuất sắc đó.
Dialogue: 0,0:08:06.02,0:08:09.73,Default,,0,0,0,,Tôi đã thấy rồi, vừa nãy gặp được\NMaki của đội Kainan.
Dialogue: 0,0:08:09.84,0:08:12.92,Default,,0,0,0,,Maki? Anh nói Maki sao?
Dialogue: 0,0:08:13.93,0:08:20.50,Default,,0,0,0,,Tiêu rồi, Maki của đội Kainan\Nlà người cần được quan sát nhất trong tỉnh.
Dialogue: 0,0:08:20.64,0:08:23.47,Default,,0,0,0,,Sendoh, sao anh không nói em biết sớm.
Dialogue: 0,0:08:23.58,0:08:26.55,Default,,0,0,0,,- Anh đang chơi em à.\N- Hikoichi, ồn ào quá đi.
Dialogue: 0,0:08:26.68,0:08:30.25,Default,,0,0,0,,- Chắc cậu ấy còn đang ở góc nào đó.\N- Tổn thất lớn rồi.
Dialogue: 0,0:08:30.39,0:08:32.52,Default,,0,0,0,,Hikoichi ồn ào chết đi được.
Dialogue: 0,0:08:33.53,0:08:36.76,Default,,0,0,0,,Vậy sao?\NMaki của Kainan cũng đến rồi à.
Dialogue: 0,0:08:38.00,0:08:39.69,Default,,0,0,0,,Nửa trận đầu kết thúc.
Dialogue: 0,0:08:40.31,0:08:42.32,Default,,0,0,0,,Tốt, chơi tốt lắm.
Dialogue: 0,0:08:42.45,0:08:43.54,Default,,0,0,0,,Đã lật ngược tình thế rồi.
Dialogue: 0,0:08:46.51,0:08:48.30,Default,,0,0,0,,Akagi, chính là vậy đó.
Dialogue: 0,0:08:48.38,0:08:50.44,Default,,0,0,0,,- Rukawa, làm tốt lắm.\N- Cảm ơn.
Dialogue: 0,0:08:50.85,0:08:54.10,Default,,0,0,0,,- Rukawa làm tốt lắm.\N- Cũng được.
Dialogue: 0,0:08:54.48,0:08:56.07,Default,,0,0,0,,[Đáng ghét.]
Dialogue: 0,0:08:56.92,0:08:59.88,Default,,0,0,0,,[Tại sao mọi người cứ bàn về\NRukawa, Rukawa.]
Dialogue: 0,0:09:03.59,0:09:04.78,Default,,0,0,0,,Thì ra là vậy.
Dialogue: 0,0:09:06.02,0:09:09.76,Default,,0,0,0,,Rukawa, giống như Sendoh\Nmà năm ngoái tôi nhìn thấy.
Dialogue: 0,0:09:12.56,0:09:13.63,Default,,0,0,0,,Rất cao.
Dialogue: 0,0:09:13.74,0:09:14.56,Default,,0,0,0,,Nhưng,
Dialogue: 0,0:09:18.38,0:09:20.47,Default,,0,0,0,,còn non nớt lắm.
Dialogue: 0,0:09:22.29,0:09:27.15,Default,,0,0,0,,[Đội trưởng đội bóng trường cấp ba\Ntrực thuộc Đại học Kainan - Maki Shinichi.]
Dialogue: 0,0:09:28.27,0:09:32.06,Default,,0,0,0,,Đáng ghét, Ryota,\Nsao anh không chuyền bóng cho tôi.
Dialogue: 0,0:09:32.44,0:09:35.86,Default,,0,0,0,,- Gì mà chuyện đó chứ.\N- Giọng điệu của cậu là sao hả?
Dialogue: 0,0:09:36.38,0:09:38.82,Default,,0,0,0,,Tôi biết rồi, anh tốt với Rukawa hơn.
Dialogue: 0,0:09:38.94,0:09:40.80,Default,,0,0,0,,Thật không biết cậu đang nói gì.
Dialogue: 0,0:09:41.83,0:09:43.32,Default,,0,0,0,,Anh bất công, anh bất công.
Dialogue: 0,0:09:43.84,0:09:48.24,Default,,0,0,0,,Anh bất công, anh bất công.
Dialogue: 0,0:09:48.50,0:09:52.73,Default,,0,0,0,,Đều do anh bất công.
Dialogue: 0,0:09:54.27,0:09:57.52,Default,,0,0,0,,Đồ ngu, cậu đang nói chuyện vừa nãy sao?
Dialogue: 0,0:09:58.92,0:10:02.88,Default,,0,0,0,,Lúc đó người phòng thủ của Miuradai\Nđã đợi tôi chuyển bóng cho cậu rồi,
Dialogue: 0,0:10:03.81,0:10:06.62,Default,,0,0,0,,cậu có ý kiến với\Nphán đoán linh hoạt của tôi sao?
Dialogue: 0,0:10:06.72,0:10:11.50,Default,,0,0,0,,Anh bất công, anh bất công.
Dialogue: 0,0:10:12.43,0:10:13.95,Default,,0,0,0,,Tôi không có.
Dialogue: 0,0:10:17.59,0:10:19.08,Default,,0,0,0,,Hai cậu đang đánh nhau sao?
Dialogue: 0,0:10:23.26,0:10:25.83,Default,,0,0,0,,- Sao có thể chứ.\N- Bọn em rất có tinh thần đồng đội.
Dialogue: 0,0:10:33.98,0:10:38.43,Default,,0,0,0,,Đồ Rukawa đáng ghét,\Ntao sẽ không để mày ra oai nữa đâu.
Dialogue: 0,0:10:39.32,0:10:41.29,Default,,0,0,0,,Miyamoto, tăng cường sự va chạm.
Dialogue: 0,0:10:41.54,0:10:44.14,Default,,0,0,0,,- Sự va chạm của cậu vẫn chưa đủ.\N- Vâng.
Dialogue: 0,0:10:44.64,0:10:48.24,Default,,0,0,0,,Kèm cho kỹ vào, mắc lỗi nhỏ cũng không sao.
Dialogue: 0,0:10:49.01,0:10:51.43,Default,,0,0,0,,Chúng ta không thể\Nrơi vào khổ chiến từ trận đầu tiên.
Dialogue: 0,0:10:51.64,0:10:52.63,Default,,0,0,0,,Các cậu hiểu ý tôi chứ?
Dialogue: 0,0:10:53.28,0:10:54.44,Default,,0,0,0,,Nói hay lắm.
Dialogue: 0,0:10:54.91,0:10:57.67,Default,,0,0,0,,Sau khi họ ra sân thì không được điểm nào,\Nthật không ra hồn.
Dialogue: 0,0:10:59.92,0:11:01.68,Default,,0,0,0,,Chú ý, mọi người nghe cho kỹ đây.
Dialogue: 0,0:11:05.95,0:11:07.15,Default,,0,0,0,,Chúng ta là mạnh nhất.
Dialogue: 0,0:11:10.43,0:11:15.31,Default,,0,0,0,,Cho đến khi xứng bá tỉnh Kanagawa,\Ncứ liên tục giành chiến thắng.
Dialogue: 0,0:11:16.11,0:11:16.88,Default,,0,0,0,,Vâng.
Dialogue: 0,0:11:21.10,0:11:22.69,Default,,0,0,0,,Đừng có đùa nữa.
Dialogue: 0,0:11:24.30,0:11:25.45,Default,,0,0,0,,Mitsui là gì chứ.
Dialogue: 0,0:11:26.43,0:11:30.52,Default,,0,0,0,,MVP cấp hai thì là gì chứ,\Nđến cấp ba chẳng là gì cả.
Dialogue: 0,0:11:37.26,0:11:40.39,Default,,0,0,0,,Rukawa là gì chứ,\Nchỉ là đứa học sinh lớp 10 thôi.
Dialogue: 0,0:11:41.13,0:11:44.93,Default,,0,0,0,,Số 11 và tên tóc đỏ số 10.
Dialogue: 0,0:11:49.23,0:11:51.56,Default,,0,0,0,,Tôi phải đánh bại họ.
Dialogue: 0,0:11:55.98,0:12:00.28,Default,,0,0,0,,[Số 9 của trường cấp ba Miuradai,\NNaito Tetsuya cũng cao 196cm.]
Dialogue: 0,0:12:00.68,0:12:02.91,Default,,0,0,0,,[Vị trí tiền phong chính.]
Dialogue: 0,0:12:23.60,0:12:25.12,Default,,0,0,0,,Nửa trận sau để cho Naito.
Dialogue: 0,0:12:25.26,0:12:28.23,Default,,0,0,0,,- Cậu vất vả rồi Miyamoto.\N- Vâng.
Dialogue: 0,0:12:28.31,0:12:31.69,Default,,0,0,0,,Nhờ cậu đó Naito, hãy đánh bại Shohoku.
Dialogue: 0,0:12:31.80,0:12:32.83,Default,,0,0,0,,Ừ.
Dialogue: 0,0:12:33.94,0:12:37.80,Default,,0,0,0,,Phải rồi, Naito nói đúng,\Ndùng sức mạnh đánh bại Shohoku.
Dialogue: 0,0:12:37.94,0:12:39.88,Default,,0,0,0,,- Bắt đầu thôi.\N- Ừ.
Dialogue: 0,0:12:42.48,0:12:43.57,Default,,0,0,0,,Cái gì thế?
Dialogue: 0,0:12:44.25,0:12:46.34,Default,,0,0,0,,Người đó là ai? Cao quá đi.
Dialogue: 0,0:12:46.78,0:12:47.77,Default,,0,0,0,,Là người mới sao?
Dialogue: 0,0:12:50.23,0:12:51.69,Default,,0,0,0,,To con quá.
Dialogue: 0,0:12:54.47,0:12:56.75,Default,,0,0,0,,Là hòa thượng chơi bóng rổ sao?
Dialogue: 0,0:12:57.81,0:13:01.89,Default,,0,0,0,,- Người, người đầu trọc kia là ai?\N- Miuradai có thành viên này sao?
Dialogue: 0,0:13:03.52,0:13:05.59,Default,,0,0,0,,Sổ ghi chép của tôi\Ncũng không có thông tin này.
Dialogue: 0,0:13:05.76,0:13:10.59,Default,,0,0,0,,- Cậu ta là ai?\N- Cậu ta là cầu thủ thật sao?
Dialogue: 0,0:13:11.30,0:13:14.56,Default,,0,0,0,,Tôi tên là Naito, Naito Tetsuya.
Dialogue: 0,0:13:15.46,0:13:17.22,Default,,0,0,0,,Các cậu hãy nhớ kỹ đó.
Dialogue: 0,0:13:18.29,0:13:22.75,Default,,0,0,0,,Nat... Nat...to.
Dialogue: 0,0:13:24.84,0:13:26.55,Default,,0,0,0,,[Cậu ấy là vũ khí bí mật của chúng tôi.]
Dialogue: 0,0:13:26.65,0:13:30.12,Default,,0,0,0,,[Vì thời khắc này\Nmà cố tình lôi kéo từ đội bóng bầu dục qua đây.]
Dialogue: 0,0:13:30.24,0:13:32.94,Default,,0,0,0,,[Nào, hãy phát huy sức mạnh của cậu đi.]
Dialogue: 0,0:13:33.04,0:13:35.14,Default,,0,0,0,,[Đánh bại họ đi.]
Dialogue: 0,0:13:37.28,0:13:40.46,Default,,0,0,0,,- Bây giờ trận đấu mới chính thức bắt đầu.\N- Vâng.
Dialogue: 0,0:13:41.41,0:13:42.75,Default,,0,0,0,,Tôi phải đánh bại các cậu.
Dialogue: 0,0:14:01.12,0:14:02.89,Default,,0,0,0,,Sức mạnh của Akagi thua cậu ấy.
Dialogue: 0,0:14:04.94,0:14:07.84,Default,,0,0,0,,- Hanamichi, mau đuổi theo.\N- Được, giao cho tôi.
Dialogue: 0,0:14:15.07,0:14:17.47,Default,,0,0,0,,Rukawa, Sakuragi.
Dialogue: 0,0:14:24.88,0:14:27.03,Default,,0,0,0,,Trọng tài không thổi còi,\Nkhông tính phạm lỗi.
Dialogue: 0,0:14:37.95,0:14:40.25,Default,,0,0,0,,Thế nào? Trận đấu giờ mới bắt đầu đấy.
Dialogue: 0,0:14:40.35,0:14:42.80,Default,,0,0,0,,Làm gì thế, cái tên đầu trọc giỏi thật.
Dialogue: 0,0:14:42.92,0:14:45.65,Default,,0,0,0,,Cậu ta va chạm với Sakuragi,\NSakuragi văng xa luôn.
Dialogue: 0,0:14:46.31,0:14:48.06,Default,,0,0,0,,Thật là khó tin mà.
Dialogue: 0,0:14:49.39,0:14:50.43,Default,,0,0,0,,[Rất tốt.]
Dialogue: 0,0:14:50.60,0:14:55.45,Default,,0,0,0,,[Sức mạnh khi tập luyện môn bóng bầu dục,\Nvà sức chân 11 giây 100m.]
Dialogue: 0,0:14:55.64,0:14:59.77,Default,,0,0,0,,[Tuy kinh nghiệm bóng rổ còn ít, Naito là\Nvũ khí bí mật của tiền phong chúng tôi.]
Dialogue: 0,0:14:59.90,0:15:01.79,Default,,0,0,0,,Sakuragi, cậu không sao chứ?
Dialogue: 0,0:15:01.90,0:15:03.73,Default,,0,0,0,,Sakuragi Hanamichi, mau dậy đi.
Dialogue: 0,0:15:03.76,0:15:04.73,Default,,0,0,0,,Cậu không sao chứ?
Dialogue: 0,0:15:07.95,0:15:09.21,Default,,0,0,0,,Cái tên này.
Dialogue: 0,0:15:13.53,0:15:16.23,Default,,0,0,0,,- Hanamichi dừng tay.\N- Không được đánh nhau.
Dialogue: 0,0:15:16.31,0:15:18.76,Default,,0,0,0,,Anh buông tôi ra, Ryochin, Mitchi.
Dialogue: 0,0:15:18.91,0:15:22.31,Default,,0,0,0,,Cậu ta dám\Nđể cho thiên tài Sakuragi mất mặt.
Dialogue: 0,0:15:22.84,0:15:26.09,Default,,0,0,0,,- Huấn luyện viên Anzai đang xem đó.\N- Sakuragi dừng tay.
Dialogue: 0,0:15:30.24,0:15:31.69,Default,,0,0,0,,Sakuragi bình tĩnh lại nào.
Dialogue: 0,0:15:31.77,0:15:34.93,Default,,0,0,0,,- Lẽ nào cậu muốn bị đuổi ra khỏi sân à?\N- Tinh Tinh Bự.
Dialogue: 0,0:15:35.80,0:15:38.70,Default,,0,0,0,,Không sao, chúng ta tiếp tục thi đấu đi.
Dialogue: 0,0:15:39.38,0:15:40.77,Default,,0,0,0,,[Mình biết rồi.]
Dialogue: 0,0:15:40.87,0:15:43.25,Default,,0,0,0,,[Thì ra anh ấy còn vào dựa vào\Nthiên tài mình đây.]
Dialogue: 0,0:15:43.64,0:15:45.26,Default,,0,0,0,,[Người tiếp theo chính là cậu.]
Dialogue: 0,0:15:48.70,0:15:50.74,Default,,0,0,0,,[Lại thêm một kẻ ngốc.]
Dialogue: 0,0:15:51.31,0:15:54.65,Default,,0,0,0,,- Tất cả các kiểu cầu thủ đều có rồi.\N- Phải quan sát kỹ vào.
Dialogue: 0,0:16:00.41,0:16:03.26,Default,,0,0,0,,Xem ra cục diện lại thay đổi rồi.
Dialogue: 0,0:16:04.17,0:16:07.28,Default,,0,0,0,,[Shohoku có cách nào thay đổi\Ncục diện này không,]
Dialogue: 0,0:16:08.01,0:16:09.33,Default,,0,0,0,,[nhờ cả vào Rukawa.]
Dialogue: 0,0:16:13.30,0:16:13.99,Default,,0,0,0,,Tốt.
Dialogue: 0,0:16:16.70,0:16:17.96,Default,,0,0,0,,Không đưa cho mày.
Dialogue: 0,0:16:19.17,0:16:20.53,Default,,0,0,0,,Đừng có chặn tao.
Dialogue: 0,0:16:26.19,0:16:28.90,Default,,0,0,0,,Lại nữa rồi, cậu ấy cứ nhìn lung tung.
Dialogue: 0,0:16:29.81,0:16:31.08,Default,,0,0,0,,Là ai phạm lỗi vậy?
Dialogue: 0,0:16:31.21,0:16:35.98,Default,,0,0,0,,- Số 10 áo trắng, lỗi tấn công phạm lỗi.\N- Tại sao? Tại sao lại là tôi?
Dialogue: 0,0:16:37.44,0:16:40.25,Default,,0,0,0,,Trọng tài, người sai là cậu ta mà.
Dialogue: 0,0:16:40.37,0:16:42.92,Default,,0,0,0,,Hanamichi dừng tay, sẽ bị cho rời sân đó.
Dialogue: 0,0:16:44.01,0:16:46.51,Default,,0,0,0,,Đồ ngu, ai bảo mày giành bóng.
Dialogue: 0,0:16:48.36,0:16:51.71,Default,,0,0,0,,Đừng có bàn cãi nữa, cậu phải tập trung đó.
Dialogue: 0,0:16:51.78,0:16:56.04,Default,,0,0,0,,- Nhưng mà Mitchi, tôi đã nói rồi.\N- Đừng gọi tôi là Mitchi nữa.
Dialogue: 0,0:16:56.91,0:17:00.82,Default,,0,0,0,,Vậy gọi "Hisa" nha,\Nkhông phải anh là Mitsui Hasashi sao.
Dialogue: 0,0:17:02.81,0:17:04.11,Default,,0,0,0,,Đồ khùng.
Dialogue: 0,0:17:05.24,0:17:07.26,Default,,0,0,0,,Thôi cậu cứ gọi tôi là Mitchi đi.
Dialogue: 0,0:17:09.88,0:17:13.00,Default,,0,0,0,,- Sakuragi, canh chừng số 4.\N- Em biết rồi.
Dialogue: 0,0:17:13.53,0:17:16.00,Default,,0,0,0,,[Đáng ghét, cái đồ Đậu Nành Lên Men trọc đầu,]
Dialogue: 0,0:17:16.53,0:17:18.41,Default,,0,0,0,,[dám đẩy việc phạm lỗi\Ncho thiên tài Sakuragi đây.]
Dialogue: 0,0:17:22.38,0:17:23.87,Default,,0,0,0,,Naito.
Dialogue: 0,0:17:24.73,0:17:27.61,Default,,0,0,0,,- Đứng lại, Đậu Nành Lên Men.\N- Đồ ngu, đừng có đi chỗ khác.
Dialogue: 0,0:17:31.38,0:17:32.91,Default,,0,0,0,,Chỗ số 4 bị trống rồi.
Dialogue: 0,0:17:38.35,0:17:42.09,Default,,0,0,0,,[Lại là số 4, lại tiếp tục úp rổ,\NMiuradai đúng là giỏi đó.]
Dialogue: 0,0:17:42.81,0:17:48.36,Default,,0,0,0,,- Họ đã thấy được Sakuragi không có kinh nghiệm.\N- Lần này Sakuragi gặp rắc rối rồi.
Dialogue: 0,0:17:48.41,0:17:50.38,Default,,0,0,0,,Bây giờ người có thể xoay chuyển cục diện,
Dialogue: 0,0:17:50.49,0:17:52.25,Default,,0,0,0,,chỉ có át chủ bài thật sự, Rukawa thôi.
Dialogue: 0,0:17:53.96,0:17:57.19,Default,,0,0,0,,[Tuyệt chiêu bóng hoa mắt của Rukawa,\Ngây sự chú ý của mọi người.]
Dialogue: 0,0:17:57.30,0:18:00.40,Default,,0,0,0,,[Giống như tự mình biểu diễn vậy,\Nkhông thấy hợp tác với đội.]
Dialogue: 0,0:18:01.31,0:18:02.80,Default,,0,0,0,,Cậu hãy nghiêm túc cho tôi đi.
Dialogue: 0,0:18:02.88,0:18:05.71,Default,,0,0,0,,Tập trung vào trận đấu,\Nchuyên tâm canh chừng đối thủ.
Dialogue: 0,0:18:05.86,0:18:08.31,Default,,0,0,0,,Nghe rõ đây, đừng bị họ khiêu khích nữa.
Dialogue: 0,0:18:08.40,0:18:10.63,Default,,0,0,0,,Nhưng mà Tinh Tinh Bự, họ...
Dialogue: 0,0:18:10.78,0:18:12.43,Default,,0,0,0,,Mặc kệ đối phương là ai,
Dialogue: 0,0:18:12.52,0:18:14.89,Default,,0,0,0,,tôi cần cậu tập trung chơi bóng là được.
Dialogue: 0,0:18:14.97,0:18:17.58,Default,,0,0,0,,E là cả việc này cũng làm không xong.
Dialogue: 0,0:18:17.80,0:18:19.99,Default,,0,0,0,,Rukawa, cái đồ này.
Dialogue: 0,0:18:20.76,0:18:23.83,Default,,0,0,0,,[Đã được điểm,\Ncổ vũ đồng đội thay đổi bầu không khí,]
Dialogue: 0,0:18:23.94,0:18:26.11,Default,,0,0,0,,[mới là át chủ bài thật sự.]
Dialogue: 0,0:18:26.55,0:18:29.19,Default,,0,0,0,,[Rukawa vẫn chưa phát hiện điểm này.]
Dialogue: 0,0:18:30.19,0:18:32.06,Default,,0,0,0,,[Đây chính là chỗ cậu ta còn non nớt.]
Dialogue: 0,0:18:58.51,0:19:00.58,Default,,0,0,0,,Đừng có miễn cưỡng nữa, chuyển cho Akagi đi.
Dialogue: 0,0:19:06.05,0:19:06.98,Default,,0,0,0,,Từ lúc nào thế?
Dialogue: 0,0:19:08.56,0:19:10.16,Default,,0,0,0,,Từ lúc nào mà sức bật của cậu ta...
Dialogue: 0,0:19:12.67,0:19:13.60,Default,,0,0,0,,Úp rổ.
Dialogue: 0,0:19:13.89,0:19:15.82,Default,,0,0,0,,Không để cậu làm được đâu.
Dialogue: 0,0:19:16.86,0:19:17.99,Default,,0,0,0,,Sakuragi, đừng.
Dialogue: 0,0:19:23.97,0:19:26.91,Default,,0,0,0,,- Thế nào?\N- Số 10 áo trắng phạm lỗi.
Dialogue: 0,0:19:27.08,0:19:27.85,Default,,0,0,0,,Cái gì cơ?
Dialogue: 0,0:19:28.58,0:19:31.45,Default,,0,0,0,,Số 9 áo đen ném phạt.
Dialogue: 0,0:19:35.35,0:19:39.12,Default,,0,0,0,,[Không ngờ là thiên tài Sakuragi đây\Nlại bị hai lần phạm lỗi.]
Dialogue: 0,0:19:39.66,0:19:40.75,Default,,0,0,0,,Không thể nào.
Dialogue: 0,0:19:47.67,0:19:52.12,Default,,0,0,0,,[Kinh nghiệm bóng rổ của cậu ta còn ít,\Nném bóng chắc là không vào đâu.]
Dialogue: 0,0:19:55.44,0:19:56.77,Default,,0,0,0,,Ném phạt vào rồi.
Dialogue: 0,0:19:56.98,0:19:58.45,Default,,0,0,0,,Ném hay lắm Naito.
Dialogue: 0,0:19:59.35,0:20:00.51,Default,,0,0,0,,Tốt lắm.
Dialogue: 0,0:20:01.48,0:20:06.68,Default,,0,0,0,,[Nói thật, tôi nằm mơ cũng không nghĩ\Nsẽ cho Naito ra sân sớm vậy.]
Dialogue: 0,0:20:07.32,0:20:10.42,Default,,0,0,0,,[Vốn là muốn giữ nước cờ này\Ncho đến vòng chung kết.]
Dialogue: 0,0:20:10.69,0:20:14.14,Default,,0,0,0,,[Nhưng mà, trận này thắng chắc rồi.]
Dialogue: 0,0:20:16.06,0:20:18.49,Default,,0,0,0,,Không thể nào, quả thứ hai chắc không vào nữa.
Dialogue: 0,0:20:19.72,0:20:21.24,Default,,0,0,0,,[Ném không vào, ném không vào.]
Dialogue: 0,0:20:22.79,0:20:24.00,Default,,0,0,0,,Vào rồi!
Dialogue: 0,0:20:24.78,0:20:26.37,Default,,0,0,0,,Đáng ghét thật.
Dialogue: 0,0:20:27.40,0:20:29.26,Default,,0,0,0,,Cái tên này giỏi thật đó.
Dialogue: 0,0:20:30.39,0:20:33.40,Default,,0,0,0,,Lại hòa nữa rồi,\Nnhư này lại quay về vạch xuất phát.
Dialogue: 0,0:20:34.03,0:20:37.04,Default,,0,0,0,,[Trước sức mạnh của vũ khí bí mật\Ncủa Miuradai, Naito,]
Dialogue: 0,0:20:37.21,0:20:39.64,Default,,0,0,0,,[thế trận của Shohoku đã bị rối loạn.]
Dialogue: 0,0:20:40.58,0:20:44.40,Default,,0,0,0,,[Sakuragi Hanamichi đã trúng kế\Ncủa đối phương, bị phạm lỗi hai lần,]
Dialogue: 0,0:20:44.55,0:20:46.71,Default,,0,0,0,,[vì thế mà trận đấu trở về vạch xuất phát.]
Dialogue: 0,0:20:48.35,0:20:53.12,Default,,0,0,0,,[Rốt cuộc thì chiến thắng\Nsẽ mỉm cười với ai đây?]
Dialogue: 0,0:21:08.51,0:21:16.00,Default,,0,0,0,,♫ Cô đơn lẻ bóng, chơi vơi nơi thành thị lớn ♫
Dialogue: 0,0:21:17.76,0:21:24.99,Default,,0,0,0,,♫ Như một chai bia rỗng bị người ta vứt đi ♫
Dialogue: 0,0:21:25.13,0:21:34.24,Default,,0,0,0,,♫ Nếu buộc phải tìm hiểu mọi thứ của nhau ♫
Dialogue: 0,0:21:34.51,0:21:42.72,Default,,0,0,0,,♫ Mới gọi là yêu,\Nthì chi bằng ngủ một giấc vĩnh hằng ♫
Dialogue: 0,0:21:42.93,0:21:52.58,Default,,0,0,0,,♫ Đến tận cùng của thế giới\Ncũng không muốn xa cậu ♫
Dialogue: 0,0:21:52.72,0:21:56.92,Default,,0,0,0,,♫ Từng cầu nguyện\Ntrong biết bao nhiêu đêm tối ♫
Dialogue: 0,0:21:57.11,0:22:05.65,Default,,0,0,0,,♫ Rằng thời gian không trở lại ơi,\Nvì sao lại lóa mắt thế ♫
Dialogue: 0,0:22:05.75,0:22:19.31,Default,,0,0,0,,♫ Xát muối thêm vào trái tim\Nvốn đã tiều tụy quá đỗi này ♫
Dialogue: 0,0:22:19.94,0:22:30.09,Default,,0,0,0,,♫ Nỗi nhớ mịt mờ trong đêm bi kịch này ♫
Dialogue: 0,0:22:36.19,0:22:37.65,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:38.99,0:22:43.34,Default,,0,0,0,,Chết tiệt, tôi bị anh hại đến nỗi\Nkhông có nổi một điểm.
Dialogue: 0,0:22:43.46,0:22:44.87,Default,,0,0,0,,Lại cứ chặn tôi vậy à.
Dialogue: 0,0:22:45.04,0:22:45.85,Default,,0,0,0,,Đừng có lèm bèm nữa.
Dialogue: 0,0:22:45.96,0:22:48.29,Default,,0,0,0,,Là người phòng thủ\Nđương nhiên là phải chặn cậu rồi, đồ ngu,
Dialogue: 0,0:22:48.77,0:22:49.38,Default,,0,0,0,,Được thôi.
