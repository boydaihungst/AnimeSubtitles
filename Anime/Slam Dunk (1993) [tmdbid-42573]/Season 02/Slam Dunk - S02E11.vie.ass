Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:04.19,0:00:10.73,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:29.00,0:00:35.28,Default,,0,0,0,,♫ Ánh mặt trời chói rọi phía sau lưng,\Ntôi bước trên con đường này ♫
Dialogue: 0,0:00:35.74,0:00:41.62,Default,,0,0,0,,♫ Cũng như thường lệ, lại bị vỗ vai ♫
Dialogue: 0,0:00:42.48,0:00:48.72,Default,,0,0,0,,♫ Cậu là nữ thần của tôi, không có lý do gì cả ♫
Dialogue: 0,0:00:49.26,0:00:54.30,Default,,0,0,0,,♫ Nhưng lại chưa từng khoác lấy tay tôi ♫
Dialogue: 0,0:00:54.56,0:01:00.80,Default,,0,0,0,,♫ Không biết từ lúc nào,\Nánh mắt đã không thể rời đi ♫
Dialogue: 0,0:01:01.34,0:01:07.21,Default,,0,0,0,,♫ Không buông ra, không do dự,\Nđiên cuồng vì cậu ♫
Dialogue: 0,0:01:07.94,0:01:14.45,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:01:14.92,0:01:21.09,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:01:21.36,0:01:28.46,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm tiến lên một bước ♫
Dialogue: 0,0:01:28.90,0:01:35.84,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:01:47.10,0:01:50.96,Default,,0,0,0,,[Shohoku đã đánh bại đội Tsukubu vào trận thứ tư\Ntrong vòng loại giải đấu các trường cấp ba,]
Dialogue: 0,0:01:51.38,0:01:53.42,Default,,0,0,0,,[thuận lợi vào top tám.]
Dialogue: 0,0:02:07.14,0:02:11.24,Default,,0,0,0,,[Sakuragi Hanamchi lại phạm lỗi năm lần\Ntrong trận này và bị đuổi khỏi sân.]
Dialogue: 0,0:02:11.72,0:02:14.84,Default,,0,0,0,,[Nhưng quả bóng bật bảng của Sakuragi đã\Ncống hiến rất nhiều cho sự thắng lợi của đội bóng.]
Dialogue: 0,0:02:19.79,0:02:22.21,Default,,0,0,0,,[Nếu đánh bại đối thủ tiếp theo,\Nđội hạt giống thứ hai trường cấp ba Shoyo,]
Dialogue: 0,0:02:22.24,0:02:24.27,Default,,0,0,0,,[thì sẽ được vào vòng chung kết.]
Dialogue: 0,0:02:24.97,0:02:28.08,Default,,0,0,0,,[Nhưng đội Shoyo đứng hạng hai năm ngoái]
Dialogue: 0,0:02:28.47,0:02:31.21,Default,,0,0,0,,[cũng là đội có triển vọng\Ngiành giải quán quân năm nay.]
Dialogue: 0,0:02:33.39,0:02:37.53,Default,,0,0,0,,[Thành viên đội Shohoku bị ảnh hưởng\Nbởi sự căng thẳng khác với trước đây.]
Dialogue: 0,0:02:38.43,0:02:41.11,Default,,0,0,0,,[Cuối cùng, kíp nổ chiến đấu]
Dialogue: 0,0:02:41.13,0:02:43.94,Default,,0,0,0,,[của Shohoku với Shoyo đã bị đốt cháy.]
Dialogue: 0,0:02:45.90,0:02:47.84,Default,,0,0,0,,Các cậu cũng là đội mạnh mà.
Dialogue: 0,0:02:48.38,0:02:50.30,Default,,0,0,0,,- Sakuragi.\N- Vâng, Bố Già.
Dialogue: 0,0:02:51.41,0:02:54.15,Default,,0,0,0,,Nhiệm vụ của cậu là\Ncủng cố khu vực gần dưới rổ.
Dialogue: 0,0:02:54.85,0:02:58.35,Default,,0,0,0,,Bóng bật bảng, bóng bật bảng\Ndo cậu kiểm soát hoàn toàn.
Dialogue: 0,0:03:00.68,0:03:02.65,Default,,0,0,0,,Tất nhiên rồi, cứ để em kiểm soát.
Dialogue: 0,0:03:04.09,0:03:07.12,Default,,0,0,0,,Akagi, Rukawa, Sakuragi,
Dialogue: 0,0:03:07.14,0:03:09.03,Default,,0,0,0,,chiều cao của ba người các cậu\Ncó thể đối kháng với Shoyo.
Dialogue: 0,0:03:09.19,0:03:10.33,Default,,0,0,0,,Đầu tiên cứ bắt đầu như vậy đã.
Dialogue: 0,0:03:17.51,0:03:20.78,Default,,0,0,0,,Lên đi, ra sân nào.
Dialogue: 0,0:03:35.13,0:03:43.67,Default,,0,0,0,,[Hanamichi!\NLần đầu ra sân trong đội hình chính!]
Dialogue: 0,0:03:36.88,0:03:39.63,Default,,0,0,0,,[Hanamichi!\NLần đầu ra sân trong đội hình chính!]
Dialogue: 0,0:03:44.85,0:03:46.76,Default,,0,0,0,,Hanamichi ra trận ngay từ đầu rồi!
Dialogue: 0,0:03:46.86,0:03:48.73,Default,,0,0,0,,Thật không dám tin.
Dialogue: 0,0:03:48.76,0:03:50.52,Default,,0,0,0,,Giỏi ghê luôn, Shohoku không muốn thắng\Ntrận đấu này nữa sao?
Dialogue: 0,0:03:52.52,0:03:55.52,Default,,0,0,0,,Khốn nạn, xét về thực lực\Ntất nhiên tao ra sân trước rồi.
Dialogue: 0,0:03:59.26,0:04:00.19,Default,,0,0,0,,[Haruko,]
Dialogue: 0,0:04:00.49,0:04:02.76,Default,,0,0,0,,[hôm nay chắc chắn mình sẽ\Nkhông phụ lòng mong chờ của cậu với mình đâu.]
Dialogue: 0,0:04:04.18,0:04:05.78,Default,,0,0,0,,[Giờ mình hồi hộp quá.]
Dialogue: 0,0:04:06.21,0:04:08.41,Default,,0,0,0,,[Nếu thắng trận này thì sẽ được vào top bốn,]
Dialogue: 0,0:04:08.84,0:04:10.41,Default,,0,0,0,,[sẽ được đấu vòng chung kết rồi.]
Dialogue: 0,0:04:11.38,0:04:13.08,Default,,0,0,0,,[Mọi người nhất định phải cố lên nhé.]
Dialogue: 0,0:04:15.44,0:04:17.38,Default,,0,0,0,,Không thể thiếu cảnh giác\Ntrong hiệp đầu được.
Dialogue: 0,0:04:18.06,0:04:19.69,Default,,0,0,0,,Shohoku là một đội rất mạnh,
Dialogue: 0,0:04:20.62,0:04:24.18,Default,,0,0,0,,đánh thắng trận này\Nsẽ tăng thêm khí thế cho chúng ta.
Dialogue: 0,0:04:24.66,0:04:27.73,Default,,0,0,0,,Và năm nay chúng ta\Nphải trở thành đội hạng nhất.
Dialogue: 0,0:04:32.34,0:04:35.64,Default,,0,0,0,,Kogure, huấn luyện viên của Shoyo\Nlà người kia à?
Dialogue: 0,0:04:36.98,0:04:39.19,Default,,0,0,0,,Trông không giống huấn luyện viên\Ncủa một đội mạnh.
Dialogue: 0,0:04:39.21,0:04:43.25,Default,,0,0,0,,Không, ông ấy là thầy phụ trách cố vấn,\Nlà người ngoài ngành bóng rổ.
Dialogue: 0,0:04:44.32,0:04:49.56,Default,,0,0,0,,Huấn luyện viên là người kia,\Ntuyển thủ kiêm huấn luyện viên Fujima Kenji.
Dialogue: 0,0:04:49.58,0:04:53.74,Default,,0,0,0,,[Tuyển thủ kiêm huấn luyện viên\N#4 Fujima Kenji]
Dialogue: 0,0:04:49.58,0:04:53.74,Default,,0,0,0,,[Hậu vệ dẫn bóng]
Dialogue: 0,0:04:53.96,0:04:57.12,Default,,0,0,0,,- Được rồi, mọi người cố gắng hết sức đi.\N- Vâng!
Dialogue: 0,0:04:57.73,0:04:59.67,Default,,0,0,0,,Cố lên!
Dialogue: 0,0:04:57.82,0:04:59.91,Default,,0,0,0,,[Linh hồn chiến đấu]\N[Đội bóng rổ trường cấp ba Shoyo]
Dialogue: 0,0:05:00.70,0:05:01.80,Default,,0,0,0,,Bắt đầu trận đấu.
Dialogue: 0,0:05:02.83,0:05:04.38,Default,,0,0,0,,[Mình sẽ không bao giờ bị phạt rời sân đâu.]
Dialogue: 0,0:05:05.06,0:05:08.59,Default,,0,0,0,,[Mình nhất định phải ghi nhiều điểm\Nhơn Rukawa, xưng bá dưới bảng rổ!]
Dialogue: 0,0:05:09.37,0:05:12.03,Default,,0,0,0,,[Sứ mệnh đặt trên vai thiên tài lớn lắm,]
Dialogue: 0,0:05:15.69,0:05:17.38,Default,,0,0,0,,[nhưng mình phải thắng.]
Dialogue: 0,0:05:22.40,0:05:23.93,Default,,0,0,0,,[Người của đội bóng này ai cũng cao to quá.]
Dialogue: 0,0:05:24.81,0:05:27.95,Default,,0,0,0,,[Xem ra năm ngoái được hạng hai\Nkhiến quy mô đội bóng của họ đã mở rộng rồi.]
Dialogue: 0,0:05:29.60,0:05:30.91,Default,,0,0,0,,[Cao như vậy hơi khó đối phó đây.]
Dialogue: 0,0:05:31.24,0:05:34.34,Default,,0,0,0,,Ito!
Dialogue: 0,0:05:40.85,0:05:43.58,Default,,0,0,0,,Takano.
Dialogue: 0,0:05:48.07,0:05:50.07,Default,,0,0,0,,[#8 Takano Shoichi]\N[Tiền phong chính]
Dialogue: 0,0:05:49.89,0:05:53.36,Default,,0,0,0,,Nagano.
Dialogue: 0,0:05:53.93,0:05:59.21,Default,,0,0,0,,[#7 Nagano Mitsuru\N[Tiền phong]
Dialogue: 0,0:05:59.30,0:06:02.74,Default,,0,0,0,,Hasegawa.
Dialogue: 0,0:06:03.81,0:06:08.02,Default,,0,0,0,,[#6 Hasegawa Kazushi]\N[Tiền phong]
Dialogue: 0,0:06:11.16,0:06:12.53,Default,,0,0,0,,[Chính là tên này.]
Dialogue: 0,0:06:18.16,0:06:21.70,Default,,0,0,0,,Cậu biết không,\NMitsui của trường cấp hai Takei,
Dialogue: 0,0:06:21.89,0:06:23.25,Default,,0,0,0,,cậu ta từng là thành viên có giá trị nhất.
Dialogue: 0,0:06:23.37,0:06:24.34,Default,,0,0,0,,Tôi biết chứ.
Dialogue: 0,0:06:24.97,0:06:27.00,Default,,0,0,0,,Hồi học cấp hai tôi từng giao đấu với cậu ta.
Dialogue: 0,0:06:27.83,0:06:29.85,Default,,0,0,0,,Lúc đó tôi gần như không cản nổi cậu ta,
Dialogue: 0,0:06:30.27,0:06:32.13,Default,,0,0,0,,quả thật là một tay ném mạnh.
Dialogue: 0,0:06:33.50,0:06:36.26,Default,,0,0,0,,Nhưng lúc đó đã là\Nthời kỳ đỉnh cao của Mitsui rồi,
Dialogue: 0,0:06:36.28,0:06:39.04,Default,,0,0,0,,bây giờ có lẽ không còn đáng sợ như vậy nữa.
Dialogue: 0,0:06:40.82,0:06:43.41,Default,,0,0,0,,Tôi chắc chắn sẽ chèn ép cho Mitsui\Nchỉ ghi được từ năm điểm trở xuống.
Dialogue: 0,0:06:46.14,0:06:46.88,Default,,0,0,0,,Ai đó?
Dialogue: 0,0:06:55.15,0:06:57.66,Default,,0,0,0,,[Kẻ tầm thường mà người ta\Ncòn không nhớ đến mặt mũi này.]
Dialogue: 0,0:06:58.69,0:07:02.19,Default,,0,0,0,,Này số 6, hình như cậu muốn chèn ép cho tôi\Nghi được năm điểm trở xuống?
Dialogue: 0,0:07:03.39,0:07:07.30,Default,,0,0,0,,Dù cậu ở trường nào thì\Ncũng bớt làm trò cười cho người khác đi.
Dialogue: 0,0:07:10.27,0:07:12.99,Default,,0,0,0,,Hanagata...
Dialogue: 0,0:07:13.02,0:07:16.49,Default,,0,0,0,,Hanagata...
Dialogue: 0,0:07:16.51,0:07:20.35,Default,,0,0,0,,Hanagata...
Dialogue: 0,0:07:17.29,0:07:22.43,Default,,0,0,0,,[#5 Hanagata Toru]\N[Trung phong]
Dialogue: 0,0:07:20.59,0:07:24.43,Default,,0,0,0,,Hanagata...
Dialogue: 0,0:07:25.37,0:07:28.22,Default,,0,0,0,,Huấn luyện viên Taoka,\Ntiếng cổ vũ này làm hết hồn luôn.
Dialogue: 0,0:07:28.85,0:07:31.52,Default,,0,0,0,,Vì Hanagata là ngôi sao của Shoyo.
Dialogue: 0,0:07:32.42,0:07:37.16,Default,,0,0,0,,[So ra thì đây là lần đầu tiên Shohoku\Nthi đấu trong những tiếng cổ vũ ầm ĩ,]
Dialogue: 0,0:07:38.62,0:07:40.99,Default,,0,0,0,,[không biết trong lòng\Ncó bị ảnh hưởng gì không.]
Dialogue: 0,0:07:49.07,0:07:53.97,Default,,0,0,0,,- Bây giờ bắt đầu trận đấu của Shohoku và Shoyo.\N- Xin chỉ dạy nhiều hơn.
Dialogue: 0,0:07:54.97,0:07:57.30,Default,,0,0,0,,Hanagata, Hanagata!
Dialogue: 0,0:07:57.32,0:08:00.20,Default,,0,0,0,,Hanagata, Hanagata!
Dialogue: 0,0:08:00.23,0:08:02.60,Default,,0,0,0,,Hanagata, Hanagata!
Dialogue: 0,0:08:02.63,0:08:05.40,Default,,0,0,0,,Hanagata, Hanagata!
Dialogue: 0,0:08:05.42,0:08:07.94,Default,,0,0,0,,Hanagata, Hanagata!
Dialogue: 0,0:08:07.96,0:08:10.43,Default,,0,0,0,,Hanagata, Hanagata!
Dialogue: 0,0:08:10.86,0:08:13.43,Default,,0,0,0,,Người đeo mắt kính\Nnhìn vạm vỡ cỡ Tinh Tinh luôn.
Dialogue: 0,0:08:13.76,0:08:16.73,Default,,0,0,0,,Tinh Tinh đã là\Nngười vạm vỡ nhất Shohoku rồi.
Dialogue: 0,0:08:16.83,0:08:22.11,Default,,0,0,0,,Nhưng xét về mặt mũi thì đội kia\Nđẹp trai hơn anh ta nhiều, ai cũng cao to hết.
Dialogue: 0,0:08:22.22,0:08:24.07,Default,,0,0,0,,Sakuragi so với họ\Nthì nhìn bình thường luôn.
Dialogue: 0,0:08:24.53,0:08:25.93,Default,,0,0,0,,Đúng đó.
Dialogue: 0,0:08:26.05,0:08:29.79,Default,,0,0,0,,Trong năm người Shoyo\Ncó hết bốn người chiều cao 190cm trở lên rồi.
Dialogue: 0,0:08:32.52,0:08:34.29,Default,,0,0,0,,Akagi sẽ thắng thôi.
Dialogue: 0,0:08:34.29,0:08:35.93,Default,,0,0,0,,Akagi cố lên!
Dialogue: 0,0:08:36.06,0:08:38.33,Default,,0,0,0,,Hanagata! Hanagata!
Dialogue: 0,0:08:38.35,0:08:40.71,Default,,0,0,0,,Hanagata! Hanagata!
Dialogue: 0,0:08:40.74,0:08:43.39,Default,,0,0,0,,Hanagata! Hanagata!
Dialogue: 0,0:08:43.42,0:08:46.23,Default,,0,0,0,,Hanagata! Hanagata!
Dialogue: 0,0:08:46.25,0:08:48.91,Default,,0,0,0,,Hanagata! Hanagata!
Dialogue: 0,0:08:48.93,0:08:51.66,Default,,0,0,0,,Hanagata! Hanagata!
Dialogue: 0,0:08:52.24,0:08:54.01,Default,,0,0,0,,[Chắc chắn sẽ không bị phạt rời sân đâu!]
Dialogue: 0,0:08:56.33,0:08:58.35,Default,,0,0,0,,[Phải ghi nhiều điểm hơn Rukawa.]
Dialogue: 0,0:09:01.82,0:09:03.22,Default,,0,0,0,,[Phải xưng bá dưới bảng rổ.]
Dialogue: 0,0:09:06.09,0:09:07.16,Default,,0,0,0,,[Không bao giờ bị phạt rời sân.]
Dialogue: 0,0:09:18.27,0:09:19.70,Default,,0,0,0,,Sakuragi, làm tốt lắm!
Dialogue: 0,0:09:23.54,0:09:24.84,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:09:25.86,0:09:27.86,Default,,0,0,0,,Chẳng lẽ mình lại phạm lỗi sao?
Dialogue: 0,0:09:28.67,0:09:34.52,Default,,0,0,0,,- Số 4 màu trắng phạm lỗi tranh bóng.\N- Hay!
Dialogue: 0,0:09:35.62,0:09:39.82,Default,,0,0,0,,Shoyo cố lên!
Dialogue: 0,0:09:40.59,0:09:43.76,Default,,0,0,0,,Tao còn tưởng là Hanamichi phạm lỗi chứ,\Nkhông ngờ lại là Tinh Tinh Bự.
Dialogue: 0,0:09:44.19,0:09:45.33,Default,,0,0,0,,Chán thật.
Dialogue: 0,0:09:45.36,0:09:47.83,Default,,0,0,0,,Lỗi tranh bóng nghĩa là gì?
Dialogue: 0,0:09:48.10,0:09:52.90,Default,,0,0,0,,[Người nhảy tranh bóng không được ra tay\Nkhi chưa nhảy lên điểm cao nhất.]
Dialogue: 0,0:09:54.24,0:09:56.57,Default,,0,0,0,,Nhưng không ngờ anh trai cũng sẽ mắc lỗi này.
Dialogue: 0,0:09:57.00,0:09:59.94,Default,,0,0,0,,Không ngờ Akagi nổi tiếng bình tĩnh\Nmà cũng phạm lỗi.
Dialogue: 0,0:10:00.58,0:10:03.88,Default,,0,0,0,,Trận đấu vẫn chưa bắt đầu\Nmà đã bị bầu không khí chèn ép rồi.
Dialogue: 0,0:10:04.48,0:10:06.68,Default,,0,0,0,,Tôi thấy lần này Shohoku thua chắc rồi.
Dialogue: 0,0:10:07.05,0:10:10.82,Default,,0,0,0,,Shoyo...
Dialogue: 0,0:10:10.84,0:10:15.71,Default,,0,0,0,,Shoyo...
Dialogue: 0,0:10:15.73,0:10:20.70,Default,,0,0,0,,Shoyo...
Dialogue: 0,0:10:20.73,0:10:24.70,Default,,0,0,0,,Shoyo...
Dialogue: 0,0:10:24.72,0:10:28.51,Default,,0,0,0,,Shoyo...
Dialogue: 0,0:10:28.54,0:10:32.51,Default,,0,0,0,,Em vốn tưởng Shohoku sẽ đưa Kogure\Ndày dặn kinh nghiệm ra sân với Shoyo chứ.
Dialogue: 0,0:10:32.84,0:10:37.10,Default,,0,0,0,,Nhưng không ngờ lại đưa Sakuragi\Ntừ khi ra sân đấu tới giờ
Dialogue: 0,0:10:37.12,0:10:41.35,Default,,0,0,0,,luôn bị đuổi khỏi sân,\Nhơn nữa còn ở trạng thái kém.
Dialogue: 0,0:10:41.48,0:10:44.45,Default,,0,0,0,,Đó là vì chiều cao của Koruge không đủ.
Dialogue: 0,0:10:45.25,0:10:49.36,Default,,0,0,0,,Tôi thấy lần này họ không thể nở mày nở mặt\Nnhư mấy trận đấu trước rồi.
Dialogue: 0,0:10:50.02,0:10:52.29,Default,,0,0,0,,Chưa gì Shohoku đã dốc hết sức\Nra trận như vậy.
Dialogue: 0,0:10:52.46,0:10:55.20,Default,,0,0,0,,Em nghĩ chắc Sakuragi\Nphải phát huy thực lực của cậu ta mới được.
Dialogue: 0,0:10:55.33,0:10:58.57,Default,,0,0,0,,- Mình phải nhớ kỹ mới được.\N- Hikoichi, giọng của cậu bị thu vào rồi kìa.
Dialogue: 0,0:10:59.83,0:11:01.60,Default,,0,0,0,,- Kèm chặt số 8!\N- Giao số 8 cho em!
Dialogue: 0,0:11:07.34,0:11:10.21,Default,,0,0,0,,[Cao to quá, đáng ghét!]
Dialogue: 0,0:11:10.31,0:11:14.38,Default,,0,0,0,,Ngoài Akagi ra, tất cả mọi người\Nđều thấp hơn đối thủ một khúc.
Dialogue: 0,0:11:14.98,0:11:16.45,Default,,0,0,0,,Đừng nói Ryota,
Dialogue: 0,0:11:16.48,0:11:19.11,Default,,0,0,0,,người của Shoyo\Ncao hơn đại đa số tuyển thủ chúng ta
Dialogue: 0,0:11:19.14,0:11:21.32,Default,,0,0,0,,từ 10cm trở lên.
Dialogue: 0,0:11:24.06,0:11:28.19,Default,,0,0,0,,Trong những đội chúng ta gặp,\Nkhông đội nào mà tất cả đều cao như họ.
Dialogue: 0,0:11:40.73,0:11:42.20,Default,,0,0,0,,[Chuyền bóng từ phía trên\Nmột cách cực kỳ nhẹ nhàng!]
Dialogue: 0,0:11:47.20,0:11:47.97,Default,,0,0,0,,Akagi!
Dialogue: 0,0:11:48.99,0:11:49.69,Default,,0,0,0,,Đội trưởng.
Dialogue: 0,0:11:53.27,0:11:55.78,Default,,0,0,0,,Cố lên!
Dialogue: 0,0:11:56.66,0:12:00.07,Default,,0,0,0,,[Đánh bại Hanagata ở đây\Nthì có thể làm phấn chấn lòng người!]
Dialogue: 0,0:12:00.18,0:12:00.94,Default,,0,0,0,,Tinh Tinh Bự!
Dialogue: 0,0:12:02.60,0:12:04.15,Default,,0,0,0,,Hanagata, tới đây đi!
Dialogue: 0,0:12:56.59,0:13:00.61,Default,,0,0,0,,Hanagata!
Dialogue: 0,0:13:00.64,0:13:05.15,Default,,0,0,0,,Hanagata!
Dialogue: 0,0:13:06.15,0:13:10.49,Default,,0,0,0,,Anh ta nhảy ra sau, đó là ném nửa người về sau!
Dialogue: 0,0:13:10.77,0:13:13.72,Default,,0,0,0,,[Nhập môn bóng rổ của Tiến sĩ T]
Dialogue: 0,0:13:13.89,0:13:16.09,Default,,0,0,0,,Ném nửa người về sau
Dialogue: 0,0:13:16.64,0:13:18.21,Default,,0,0,0,,đó là vừa nhảy ra sau vừa ném rổ.
Dialogue: 0,0:13:18.48,0:13:21.28,Default,,0,0,0,,Đây là một kỹ thuật cao siêu\Nđể tránh bị đối thủ ngăn mình ném rổ.
Dialogue: 0,0:13:21.41,0:13:24.56,Default,,0,0,0,,Nhân tiện nhắc thêm là\Nkhi sức nhảy về sau lớn quá
Dialogue: 0,0:13:24.66,0:13:28.03,Default,,0,0,0,,sẽ đứng không vững khi tiếp đất,\Nphải lùi về sau 10m.
Dialogue: 0,0:13:29.93,0:13:31.90,Default,,0,0,0,,[Không hổ là Hanagata Toru.]
Dialogue: 0,0:13:36.33,0:13:38.04,Default,,0,0,0,,Tên đeo mắt kính, anh thật đáng ghét!
Dialogue: 0,0:13:38.77,0:13:40.11,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:13:38.96,0:13:40.92,Default,,0,0,0,,[Đeo mắt kính]
Dialogue: 0,0:13:41.04,0:13:43.04,Default,,0,0,0,,[Đeo mắt kính]
Dialogue: 0,0:13:45.45,0:13:48.42,Default,,0,0,0,,Sớm muộn gì tôi cũng sẽ đánh bại anh!
Dialogue: 0,0:13:57.36,0:13:58.63,Default,,0,0,0,,Tên đeo kính này,
Dialogue: 0,0:13:58.67,0:14:01.97,Default,,0,0,0,,anh dám xem thường thiên tài Sakuragi này,\Nđứng lại cho tôi!
Dialogue: 0,0:14:02.11,0:14:04.78,Default,,0,0,0,,- Tránh ra.\N- Tinh Tinh Bự.
Dialogue: 0,0:14:10.21,0:14:14.32,Default,,0,0,0,,[Akagi với Hanagata,\Nthêm ba người Uozumi của đội bóng chúng ta,]
Dialogue: 0,0:14:15.02,0:14:19.01,Default,,0,0,0,,[trận đấu này là cuộc đụng độ đầu tiên quyết định trong số họ\Nai sẽ là trung phong mạnh nhất của tỉnh.]
Dialogue: 0,0:14:19.72,0:14:20.86,Default,,0,0,0,,[Nhưng cuộc chạm trán này...]
Dialogue: 0,0:14:21.65,0:14:26.03,Default,,0,0,0,,[Đáng ghét, không thể bị phạt rời sân được,\Nphải ghi nhiều điểm hơn Rukawa,]
Dialogue: 0,0:14:21.79,0:14:26.19,Default,,0,0,0,,[Điều quan trọng hôm nay]
Dialogue: 0,0:14:26.11,0:14:27.63,Default,,0,0,0,,[xưng bá dưới bảng rổ.]
Dialogue: 0,0:14:28.01,0:14:31.32,Default,,0,0,0,,[Mình phải cho mọi người thấy\Nthực lực thật sự của mình trong trận đấu này.]
Dialogue: 0,0:14:31.40,0:14:35.39,Default,,0,0,0,,Huấn luyện viên, cách phòng thủ của Shoyo\Nlà chiến thuật kèm người nửa trận.
Dialogue: 0,0:14:35.92,0:14:39.90,Default,,0,0,0,,Không, phải nói là kèm người gần khu vực.
Dialogue: 0,0:14:39.92,0:14:43.19,Default,,0,0,0,,Cậu nhìn họ cứ luôn\Nkhông ra xa khu vực bảng rổ.
Dialogue: 0,0:14:43.63,0:14:45.99,Default,,0,0,0,,Đúng thật, họ đều cao to cả.
Dialogue: 0,0:14:46.01,0:14:49.40,Default,,0,0,0,,Akagi và Sakuragi phải thủ khu vực gần rổ\Nthật sự quá mệt.
Dialogue: 0,0:14:50.64,0:14:54.65,Default,,0,0,0,,Chỉ đối mặt với chiều cao của họ thôi,\NShohoku đã mệt hơn bình thường rồi.
Dialogue: 0,0:14:55.66,0:14:58.18,Default,,0,0,0,,Dù là chuyền bóng hay ném rổ,
Dialogue: 0,0:14:58.20,0:15:01.08,Default,,0,0,0,,đều phải tính toán về chiều cao\Ncủa đối phương trước.
Dialogue: 0,0:15:02.06,0:15:05.18,Default,,0,0,0,,Bình thường phòng thủ\Nchỉ cần vươn tay là chạm được,
Dialogue: 0,0:15:05.44,0:15:08.39,Default,,0,0,0,,lần này mà không nhảy thì\Nkhông thể chạm được bóng.
Dialogue: 0,0:15:09.69,0:15:13.49,Default,,0,0,0,,Chiều cao của thành viên đội Shoyo\Nchắc chắn đứng đầu tỉnh.
Dialogue: 0,0:15:26.97,0:15:29.31,Default,,0,0,0,,Giống như vậy, chuyền bóng lên trên\Nlà điều không thể được.
Dialogue: 0,0:15:30.64,0:15:34.25,Default,,0,0,0,,Shohoku yếu thế về chiều cao\Nsẽ đối phó với Shoyo thế nào đây?
Dialogue: 0,0:15:34.40,0:15:37.32,Default,,0,0,0,,Hikoichi là một người thấp,\Ncó thể quan sát hết những cách làm của họ.
Dialogue: 0,0:15:37.67,0:15:38.55,Default,,0,0,0,,Đúng, đúng.
Dialogue: 0,0:15:39.15,0:15:41.89,Default,,0,0,0,,Đừng để ý, phòng thủ người của cậu,\Ncản cậu ta lại!
Dialogue: 0,0:15:42.54,0:15:43.62,Default,,0,0,0,,Tôi đến cản anh đây.
Dialogue: 0,0:15:45.06,0:15:49.66,Default,,0,0,0,,[Điều đầu tiên cần để ý đến trong phòng thủ là\Nlàm sao để không khiến đối phương có được cơ hội.]
Dialogue: 0,0:15:50.16,0:15:54.00,Default,,0,0,0,,[Phải nhớ không được luôn nghĩ đến chuyện\Nghi điểm để nở mày nở mặt.]
Dialogue: 0,0:15:54.73,0:15:59.87,Default,,0,0,0,,[Mục tiêu đầu tiên hôm nay đó là\Nkhông được để bị phạt rời sân, không được phạm lỗi.]
Dialogue: 0,0:16:01.07,0:16:01.93,Default,,0,0,0,,Hanagata.
Dialogue: 0,0:16:06.41,0:16:09.92,Default,,0,0,0,,Tiêu rồi, phản xạ có điều kiện!
Dialogue: 0,0:16:10.05,0:16:12.45,Default,,0,0,0,,Số 10 màu trắng phạm lỗi.
Dialogue: 0,0:16:13.48,0:16:16.15,Default,,0,0,0,,Đồ ngu, đừng có ra tay bậy bạ chứ.
Dialogue: 0,0:16:16.32,0:16:18.42,Default,,0,0,0,,- Phạm lỗi một lần.\N- Cũng nhanh thật.
Dialogue: 0,0:16:18.59,0:16:20.89,Default,,0,0,0,,Đáng ghét, ồn ào quá đi.
Dialogue: 0,0:16:22.58,0:16:26.52,Default,,0,0,0,,[Vô thức ra tay rồi,\Nphản ứng của mình nhanh quá.]
Dialogue: 0,0:16:26.62,0:16:28.29,Default,,0,0,0,,[Thiên tài đau khổ như vậy đấy.]
Dialogue: 0,0:16:28.39,0:16:32.03,Default,,0,0,0,,Shoyo cố lên, Shoyo thừa thắng xông lên nào!
Dialogue: 0,0:16:35.63,0:16:37.30,Default,,0,0,0,,Mọi người làm sao vậy chứ?
Dialogue: 0,0:16:38.56,0:16:42.23,Default,,0,0,0,,Cả Akagi cũng thất thường luôn,\Nhành động của anh ấy quá sượng.
Dialogue: 0,0:16:42.91,0:16:48.21,Default,,0,0,0,,Quả nhiên Shoyo khác biệt với\Nđội bị chúng ta ghi được hơn trăm điểm.
Dialogue: 0,0:16:50.88,0:16:54.15,Default,,0,0,0,,[Akagi, người luôn bình tĩnh như cậu...]
Dialogue: 0,0:16:56.62,0:16:58.76,Default,,0,0,0,,[Chúng ta luôn chơi bóng với nhau\Ntừ cấp hai đến giờ,]
Dialogue: 0,0:16:59.39,0:17:02.23,Default,,0,0,0,,[tôi luôn cho rằng mình là người hiểu Akagi,]
Dialogue: 0,0:17:04.03,0:17:08.33,Default,,0,0,0,,[đã không còn là chàng trai yêu bóng rổ cuồng\Nnhiệt, khát khao chiến thắng như Akagi nữa.]
Dialogue: 0,0:17:12.67,0:17:16.71,Default,,0,0,0,,Lớp 10 chúng ta cũng đâu được ra sân,\Ntại sao phải đặc huấn chứ.
Dialogue: 0,0:17:17.01,0:17:19.26,Default,,0,0,0,,Tôi thấy mấy đàn anh về hết rồi.
Dialogue: 0,0:17:19.47,0:17:20.62,Default,,0,0,0,,Các cậu đang than vãn cái gì?
Dialogue: 0,0:17:21.03,0:17:24.89,Default,,0,0,0,,Nếu chúng ta không phấn chấn lên,\NShohoku mãi không mạnh lên được.
Dialogue: 0,0:17:25.87,0:17:29.47,Default,,0,0,0,,Nếu không cố gắng tập luyện, việc xưng bá\Ntoàn quốc sẽ trở thành ước mơ viễn vông.
Dialogue: 0,0:17:30.19,0:17:33.56,Default,,0,0,0,,Tập luyện cũng vô ích,\Ncậu xem cả Mitsui cũng đi rồi.
Dialogue: 0,0:17:33.65,0:17:36.08,Default,,0,0,0,,Akagi, cậu muốn tập thì tự tập đi.
Dialogue: 0,0:17:38.08,0:17:39.02,Default,,0,0,0,,Đám vô dụng các cậu!
Dialogue: 0,0:17:42.02,0:17:43.12,Default,,0,0,0,,Akagi, chuyền bóng.
Dialogue: 0,0:17:54.68,0:17:56.35,Default,,0,0,0,,[Akagi không chán nản vì chuyện này,]
Dialogue: 0,0:17:57.42,0:18:00.12,Default,,0,0,0,,[cậu ấy tin ước mơ của mình\Nsẽ luôn sục sôi ý chí chiến đấu.]
Dialogue: 0,0:18:01.28,0:18:05.55,Default,,0,0,0,,[Mùa hè cuối cùng này, cuối cùng ước mơ\Nđã ở một nơi chỉ cần vươn tay là chạm tới được.]
Dialogue: 0,0:18:06.65,0:18:08.82,Default,,0,0,0,,[Chơi thắng trận này\Nsẽ được vào vòng chung kết,]
Dialogue: 0,0:18:09.45,0:18:12.09,Default,,0,0,0,,[nghĩa là có cơ hội vào giải đấu cả nước rồi.]
Dialogue: 0,0:18:14.56,0:18:17.82,Default,,0,0,0,,[Cậu căng thẳng\Ncũng là chuyện đương nhiên thôi.]
Dialogue: 0,0:18:17.85,0:18:21.30,Default,,0,0,0,,[Nhưng đây là mùa hè cuối cùng\Ncủa chúng ta rồi,]
Dialogue: 0,0:18:21.53,0:18:24.27,Default,,0,0,0,,[xin cậu đấy,\Nhãy để tôi theo đuổi được ước mơ nhé.]
Dialogue: 0,0:18:25.03,0:18:26.30,Default,,0,0,0,,Akagi!
Dialogue: 0,0:18:28.50,0:18:31.37,Default,,0,0,0,,[Mình chắc chắn phải chèn ép được tên này.]
Dialogue: 0,0:18:37.56,0:18:38.53,Default,,0,0,0,,Hanagata.
Dialogue: 0,0:18:47.40,0:18:48.74,Default,,0,0,0,,Mơ đẹp nhỉ?
Dialogue: 0,0:18:49.88,0:18:50.48,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:18:53.50,0:18:54.78,Default,,0,0,0,,Động tác giả!
Dialogue: 0,0:19:00.70,0:19:02.02,Default,,0,0,0,,Hanagata.
Dialogue: 0,0:19:11.90,0:19:15.33,Default,,0,0,0,,Ném hay lắm, hay quá.
Dialogue: 0,0:19:15.63,0:19:18.45,Default,,0,0,0,,Hanagata.
Dialogue: 0,0:19:18.57,0:19:19.54,Default,,0,0,0,,Ném hay lắm!
Dialogue: 0,0:19:25.59,0:19:26.53,Default,,0,0,0,,Giỏi thật đó.
Dialogue: 0,0:19:26.85,0:19:29.39,Default,,0,0,0,,Cao to mà tốc độ như kia,
Dialogue: 0,0:19:29.82,0:19:33.49,Default,,0,0,0,,hơn nữa động tác cũng dẻo dai,\Nquả là đối thủ đáng sợ.
Dialogue: 0,0:19:33.80,0:19:36.54,Default,,0,0,0,,Nếu Akagi và Uozumi\Nlà trung phong dạng cứng cỏi,
Dialogue: 0,0:19:36.77,0:19:38.84,Default,,0,0,0,,thì Hanagata chính là\Ntrung phong dạng mềm dẻo.
Dialogue: 0,0:19:39.99,0:19:41.33,Default,,0,0,0,,[Hanagata với Akagi.]
Dialogue: 0,0:19:42.02,0:19:47.66,Default,,0,0,0,,[Trận đối đầu này, dường như trụ cột Akagi\Ncủa Shohoku đã thua Hanagata rồi.]
Dialogue: 0,0:19:48.39,0:19:52.36,Default,,0,0,0,,[Trận này chắc sẽ trở thành\Ntrận thể hiện của Shoyo.]
Dialogue: 0,0:19:54.06,0:19:57.13,Default,,0,0,0,,[Phải tiêu diệt Shohoku trong trận đấu này,]
Dialogue: 0,0:19:57.66,0:20:00.53,Default,,0,0,0,,[nếu không sẽ hết cơ hội đạt được\Nước mơ đánh bại Kainan.]
Dialogue: 0,0:20:01.25,0:20:04.46,Default,,0,0,0,,[Shoyo của năm nay\Nsẽ trở thành đội bóng đứng đầu cả tỉnh.]
Dialogue: 0,0:20:04.92,0:20:08.49,Default,,0,0,0,,Hanagata, Hanagata...
Dialogue: 0,0:20:08.88,0:20:12.67,Default,,0,0,0,,Hanagata, Hanagata...
Dialogue: 0,0:20:12.82,0:20:17.78,Default,,0,0,0,,Hanagata, Hanagata...
Dialogue: 0,0:20:17.83,0:20:19.00,Default,,0,0,0,,[Hanagata!]
Dialogue: 0,0:20:24.37,0:20:26.23,Default,,0,0,0,,[Tên đeo kính,]
Dialogue: 0,0:20:26.23,0:20:30.10,Default,,0,0,0,,[tôi sắp biến anh thành bại tướng\Ndưới tay thiên tài Sakuragi này rồi.]
Dialogue: 0,0:20:37.07,0:20:37.95,Default,,0,0,0,,[Trận đấu bắt đầu không lâu,]
Dialogue: 0,0:20:38.05,0:20:42.65,Default,,0,0,0,,[Shohoku liên tục bị trung phong Hanagata\Ncủa Shoyo ném rổ ghi điểm, rơi vào thế khó.]
Dialogue: 0,0:20:42.95,0:20:46.04,Default,,0,0,0,,[Cứ tiếp tục như vậy sẽ thật sự\Ntrở thành trận thể hiện của Shoyo mất.]
Dialogue: 0,0:20:46.18,0:20:48.06,Default,,0,0,0,,[Shohoku phải phản công thế nào đây?]
Dialogue: 0,0:21:08.62,0:21:16.26,Default,,0,0,0,,♫ Cô đơn lẻ bóng, chơi vơi nơi thành thị lớn ♫
Dialogue: 0,0:21:17.83,0:21:24.78,Default,,0,0,0,,♫ Như một chai bia rỗng bị người ta vứt đi ♫
Dialogue: 0,0:21:24.99,0:21:34.14,Default,,0,0,0,,♫ Nếu buộc phải tìm hiểu mọi thứ của nhau ♫
Dialogue: 0,0:21:34.20,0:21:41.94,Default,,0,0,0,,♫ Mới gọi là yêu,\Nthì chi bằng ngủ một giấc vĩnh hằng ♫
Dialogue: 0,0:21:42.69,0:21:52.67,Default,,0,0,0,,♫ Đến tận cùng của thế giới\Ncũng không muốn xa cậu ♫
Dialogue: 0,0:21:52.84,0:22:01.28,Default,,0,0,0,,♫ Từng cầu nguyện\Ntrong biết bao nhiêu đêm tối ♫
Dialogue: 0,0:22:01.68,0:22:11.12,Default,,0,0,0,,♫ Rằng thời gian không trở lại ơi,\Nvì sao lại lóa mắt thế ♫
Dialogue: 0,0:22:11.14,0:22:19.50,Default,,0,0,0,,♫ Xát muối thêm vào trái tim\Nvốn đã tiều tụy quá đỗi này ♫
Dialogue: 0,0:22:19.99,0:22:31.28,Default,,0,0,0,,♫ Nỗi nhớ mịt mờ trong đêm bi kịch này ♫
Dialogue: 0,0:22:36.20,0:22:37.63,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:40.28,0:22:42.64,Default,,0,0,0,,Rukawa, chuyền bóng cho tao!
Dialogue: 0,0:22:42.74,0:22:45.08,Default,,0,0,0,,Muốn trình diễn cá nhân sao?
Dialogue: 0,0:22:45.21,0:22:45.88,Default,,0,0,0,,Này, mau chạy đi!
Dialogue: 0,0:22:46.34,0:22:48.18,Default,,0,0,0,,Tên đó một chọi hai\Nmà cũng phóng thủng được phòng thủ?
Dialogue: 0,0:22:48.25,0:22:49.65,Default,,0,0,0,,Đừng đùa nữa.
Dialogue: 0,0:22:49.99,0:22:52.36,Default,,0,0,0,,Nếu là thiên tài Sakuragi Hanamichi này\Nthì thôi không nói,
Dialogue: 0,0:22:52.73,0:22:55.96,Default,,0,0,0,,không cho phép\Nmàn thể hiện cá nhân của mày đâu!
Dialogue: 0,0:22:56.16,0:22:59.83,Default,,0,0,0,,Muốn lãng phí cơ hội à?\NChuyền bóng, chuyền bóng, chuyền bóng!
Dialogue: 0,0:23:00.70,0:23:01.64,Default,,0,0,0,,"Cao thủ bóng rổ."
Dialogue: 0,0:23:02.09,0:23:03.59,Default,,0,0,0,,"Đòn phản công của Rukawa!"
Dialogue: 0,0:23:03.86,0:23:05.10,Default,,0,0,0,,Nhất định đừng bỏ lỡ nhé!
