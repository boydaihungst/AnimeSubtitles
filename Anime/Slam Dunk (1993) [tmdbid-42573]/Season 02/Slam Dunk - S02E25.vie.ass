Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:04.23,0:00:10.60,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:28.97,0:00:35.53,Default,,0,0,0,,♫ Ánh mặt trời chói rọi phía sau lưng,\Ntôi bước trên con đường này ♫
Dialogue: 0,0:00:35.77,0:00:41.87,Default,,0,0,0,,♫ Cũng như thường lệ, lại bị vỗ vai ♫
Dialogue: 0,0:00:42.58,0:00:48.85,Default,,0,0,0,,♫ Cậu là nữ thần của tôi, không có lý do gì cả ♫
Dialogue: 0,0:00:49.19,0:00:54.39,Default,,0,0,0,,♫ Nhưng lại chưa từng khoác lấy tay tôi ♫
Dialogue: 0,0:00:54.66,0:01:01.00,Default,,0,0,0,,♫ Không biết từ lúc nào,\Nánh mắt đã không thể rời đi ♫
Dialogue: 0,0:01:01.40,0:01:07.50,Default,,0,0,0,,♫ Không buông ra, không do dự,\Nđiên cuồng vì cậu ♫
Dialogue: 0,0:01:07.91,0:01:14.74,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:01:14.98,0:01:21.32,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:01:21.52,0:01:28.62,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm tiến lên một bước ♫
Dialogue: 0,0:01:28.86,0:01:36.27,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:01:46.57,0:01:48.93,Default,,0,0,0,,[Đội bóng rổ Shohoku liên tục giành được thắng lợi\Ntrong vòng loại của giải đấu trường cấp ba toàn tỉnh.]
Dialogue: 0,0:01:49.01,0:01:51.34,Default,,0,0,0,,[Cuối cùng cũng đến vòng chung kết.]
Dialogue: 0,0:01:51.66,0:01:56.04,Default,,0,0,0,,[Mở ra trận đấu đầu tiên\Ntranh đoạt quyền tham gia đại hội toàn quốc.]
Dialogue: 0,0:01:56.28,0:01:57.25,Default,,0,0,0,,Đáng ghét!
Dialogue: 0,0:02:04.19,0:02:06.25,Default,,0,0,0,,- Tuyệt đối không thể thua cậu được!\N- Tuyệt đối không thể thua mày được!
Dialogue: 0,0:02:09.46,0:02:10.64,Default,,0,0,0,,[Cùng với trường cấp ba\Ntrực thuộc Đại học Kainan,]
Dialogue: 0,0:02:10.72,0:02:12.44,Default,,0,0,0,,[đội bóng rổ vua với\Nthực lực áp chế sáng chói toàn tỉnh,]
Dialogue: 0,0:02:12.44,0:02:15.13,Default,,0,0,0,,[liên tục được vào vòng chung kết\Ntrong suốt 16 năm qua.]
Dialogue: 0,0:02:15.93,0:02:18.30,Default,,0,0,0,,[Năm nay tiếng reo của họ vẫn dâng cao như thế.]
Dialogue: 0,0:02:18.39,0:02:22.09,Default,,0,0,0,,[Nhưng đội bóng rổ Shohoku - đội đã\Nđánh bại đội Shoyo để vào vòng chung kết]
Dialogue: 0,0:02:22.26,0:02:25.10,Default,,0,0,0,,[cũng như cơn lốc\Ntập trung mọi ánh nhìn của mọi người.]
Dialogue: 0,0:02:40.94,0:02:42.81,Default,,0,0,0,,[Những đứa trẻ này sao thế nhỉ?]
Dialogue: 0,0:02:42.95,0:02:46.28,Default,,0,0,0,,[Trận đấu bắt đầu chưa được mấy giây\Nđã để khán giả mắt chữ o mồm chữ a luôn rồi.]
Dialogue: 0,0:02:47.29,0:02:50.73,Default,,0,0,0,,[Trận đấu mới bắt đầu,\Nbầu không khí của cả sân đấu đã cháy lên.]
Dialogue: 0,0:02:51.82,0:03:00.45,Default,,0,0,0,,[Ngoài dự đoán,\NHanamichi với trạng thái đỉnh cao]
Dialogue: 0,0:02:53.96,0:02:57.57,Default,,0,0,0,,[Ngoài dự đoán,\NHanamichi với trạng thái đỉnh cao]
Dialogue: 0,0:03:07.22,0:03:08.74,Default,,0,0,0,,Số 4 OK.
Dialogue: 0,0:03:12.42,0:03:13.53,Default,,0,0,0,,Số 5, canh chừng chặt vào.
Dialogue: 0,0:03:14.47,0:03:16.49,Default,,0,0,0,,Số 9 OK.
Dialogue: 0,0:03:21.47,0:03:24.70,Default,,0,0,0,,Shohoku kèm chặt một với một.
Dialogue: 0,0:03:24.73,0:03:27.07,Default,,0,0,0,,Hình như trận nào họ cũng làm thế,
Dialogue: 0,0:03:29.14,0:03:32.04,Default,,0,0,0,,một kèm một khá\Nlà phù hợp với tính cách của họ.
Dialogue: 0,0:03:33.85,0:03:36.80,Default,,0,0,0,,Có điều có một điểm làm tôi khá là để ý.
Dialogue: 0,0:03:37.26,0:03:38.41,Default,,0,0,0,,Đó chính là hậu vệ dẫn bóng.
Dialogue: 0,0:03:40.39,0:03:42.45,Default,,0,0,0,,Chiều cao kém 16cm
Dialogue: 0,0:03:42.67,0:03:45.51,Default,,0,0,0,,cân nặng cũng kém hơn gần 20kg,
Dialogue: 0,0:03:46.59,0:03:49.18,Default,,0,0,0,,thực lực của Miyagi với Maki\Nchênh lệch nhau quá xa.
Dialogue: 0,0:03:51.40,0:03:52.20,Default,,0,0,0,,Takasago!
Dialogue: 0,0:03:52.46,0:03:54.46,Default,,0,0,0,,Thật à? Có thế mà đã chuyền qua được rồi.
Dialogue: 0,0:03:58.93,0:04:00.48,Default,,0,0,0,,trường cấp ba trực thuộc Đại học Kainan\Nsẽ ghi điểm trước.
Dialogue: 0,0:04:06.18,0:04:07.01,Default,,0,0,0,,Đội trưởng.
Dialogue: 0,0:04:07.21,0:04:08.37,Default,,0,0,0,,Tinh Tinh Bự, làm tốt lắm.
Dialogue: 0,0:04:08.73,0:04:11.10,Default,,0,0,0,,- Hay!\N- Đánh hay lắm anh ơi!
Dialogue: 0,0:04:11.64,0:04:13.22,Default,,0,0,0,,Phải lên kia!
Dialogue: 0,0:04:17.39,0:04:18.58,Default,,0,0,0,,Vẫn chưa có ai ghi điểm.
Dialogue: 0,0:04:18.86,0:04:19.88,Default,,0,0,0,,Giỏi quá.
Dialogue: 0,0:04:21.33,0:04:24.70,Default,,0,0,0,,Kia kìa, lần này đổi lại là cơ hội của Shohoku.
Dialogue: 0,0:04:25.08,0:04:28.52,Default,,0,0,0,,Xét từ đòn tấn công nhanh khi nãy,\NShohoku sẽ thừa thế ghi điểm.
Dialogue: 0,0:04:29.37,0:04:32.43,Default,,0,0,0,,Đây là đội hình tấn công nhanh sở trường\Nnhất của Shohoku, chiến thuật ba điểm.
Dialogue: 0,0:04:32.63,0:04:34.22,Default,,0,0,0,,Shohoku, lên!
Dialogue: 0,0:04:41.92,0:04:44.54,Default,,0,0,0,,Mitsui sẽ giành lấy ba điểm chứ?
Dialogue: 0,0:04:46.42,0:04:47.78,Default,,0,0,0,,Đã bị chặn rồi.
Dialogue: 0,0:04:49.56,0:04:50.42,Default,,0,0,0,,[Không được.]
Dialogue: 0,0:04:55.06,0:04:56.20,Default,,0,0,0,,Làm tốt lắm!
Dialogue: 0,0:04:56.90,0:04:59.06,Default,,0,0,0,,[Mitsui không chỉ biết ném ba điểm mà thôi.]
Dialogue: 0,0:05:01.07,0:05:03.90,Default,,0,0,0,,Bóng một điểm cũng là của tôi.
Dialogue: 0,0:05:10.21,0:05:11.13,Default,,0,0,0,,Maki!
Dialogue: 0,0:05:18.28,0:05:19.18,Default,,0,0,0,,Hay.
Dialogue: 0,0:05:24.66,0:05:26.31,Default,,0,0,0,,Hay lắm!
Dialogue: 0,0:05:28.92,0:05:30.59,Default,,0,0,0,,Kainan đánh trả kìa.
Dialogue: 0,0:05:30.59,0:05:31.91,Default,,0,0,0,,Là hai với hai.
Dialogue: 0,0:05:39.01,0:05:40.66,Default,,0,0,0,,Được, tới đi.
Dialogue: 0,0:05:42.89,0:05:43.87,Default,,0,0,0,,Canh chừng Kiyota.
Dialogue: 0,0:05:44.84,0:05:47.34,Default,,0,0,0,,Biết rồi, khỏi cần mày chỉ huy tao.
Dialogue: 0,0:05:47.59,0:05:50.58,Default,,0,0,0,,Rakawa, coi chừng Jin ném bóng ba điểm đấy!
Dialogue: 0,0:05:50.61,0:05:52.13,Default,,0,0,0,,Cậu ta ra tay rồi.
Dialogue: 0,0:06:04.39,0:06:05.74,Default,,0,0,0,,[Muốn ném bóng à?]
Dialogue: 0,0:06:13.74,0:06:15.82,Default,,0,0,0,,Chuyền hay lắm.
Dialogue: 0,0:06:16.47,0:06:18.46,Default,,0,0,0,,Ngây thơ quá, Khỉ Hoang.
Dialogue: 0,0:06:20.97,0:06:22.62,Default,,0,0,0,,Xem chiêu này.
Dialogue: 0,0:06:23.29,0:06:25.23,Default,,0,0,0,,Chân truyền của Tinh Tinh Bự.
Dialogue: 0,0:06:25.79,0:06:28.54,Default,,0,0,0,,Tuyệt chiêu đập ruồi.
Dialogue: 0,0:06:42.05,0:06:43.10,Default,,0,0,0,,[Cái...]
Dialogue: 0,0:06:47.21,0:06:48.48,Default,,0,0,0,,[Cái gì?]
Dialogue: 0,0:06:55.70,0:06:59.50,Default,,0,0,0,,Lại bị vượt qua trước rồi, chẳng lẽ\Ncậu không lái nhanh hơn được à Nakamura?
Dialogue: 0,0:07:01.02,0:07:02.58,Default,,0,0,0,,An toàn giao thông là quan trọng nhất.
Dialogue: 0,0:07:04.46,0:07:07.65,Default,,0,0,0,,Cứ thế này lúc chúng ta đến\Nthì trận đấu đã kết thúc từ lâu rồi.
Dialogue: 0,0:07:07.85,0:07:12.11,Default,,0,0,0,,Chỉ cử hai ta đến phỏng vấn trận đấu\Ncủa Ryonan với Takesato,
Dialogue: 0,0:07:12.14,0:07:15.54,Default,,0,0,0,,quá đáng lắm luôn ấy chị Aida,\Nquả thật là giày vò người ta.
Dialogue: 0,0:07:15.71,0:07:19.40,Default,,0,0,0,,Biết sao được, ai bảo không đủ nhân lực làm gì.
Dialogue: 0,0:07:20.02,0:07:24.03,Default,,0,0,0,,Tóm lại bây giờ là cuộc chiến\Ntranh giành từng giây, lái mau lên.
Dialogue: 0,0:07:24.24,0:07:26.21,Default,,0,0,0,,Vâng, vâng.
Dialogue: 0,0:07:31.08,0:07:33.00,Default,,0,0,0,,[Kiyota Nobunaga.]
Dialogue: 0,0:07:36.80,0:07:40.99,Default,,0,0,0,,[Kainan cũng tìm được\Nthiên tài không thể xem thường.]
Dialogue: 0,0:07:51.13,0:07:53.34,Default,,0,0,0,,Koshino, chuyền cao đi!
Dialogue: 0,0:08:03.25,0:08:04.94,Default,,0,0,0,,Ngắt hay lắm.
Dialogue: 0,0:08:04.94,0:08:06.21,Default,,0,0,0,,Là Sendoh à.
Dialogue: 0,0:08:06.86,0:08:08.95,Default,,0,0,0,,Chuyền bóng cao như thế,\Ntại sao cậu ta đón được?
Dialogue: 0,0:08:14.06,0:08:16.53,Default,,0,0,0,,Chuyền hay quá, tuyệt vời.
Dialogue: 0,0:08:16.84,0:08:18.39,Default,,0,0,0,,Thật là không tin nổi.
Dialogue: 0,0:08:18.39,0:08:21.13,Default,,0,0,0,,Sao họ lại có cú chuyền bóng đẹp như thế?
Dialogue: 0,0:08:27.04,0:08:29.94,Default,,0,0,0,,Mới đó mà đã hai điểm rồi.
Dialogue: 0,0:08:30.19,0:08:32.81,Default,,0,0,0,,Ryonan mạnh quá, không thể ngăn cản được.
Dialogue: 0,0:08:32.84,0:08:36.63,Default,,0,0,0,,Rõ ràng là chung kết nhưng\Nmột bên bị tấn công áp đảo, ghê gớm thật.
Dialogue: 0,0:08:40.02,0:08:42.78,Default,,0,0,0,,Người này là em trai à, tôi tên Nakamura,
Dialogue: 0,0:08:43.65,0:08:45.88,Default,,0,0,0,,luôn được chị Aida chăm sóc.
Dialogue: 0,0:08:45.90,0:08:47.44,Default,,0,0,0,,Đừng nói nữa.
Dialogue: 0,0:08:47.63,0:08:49.03,Default,,0,0,0,,Chị... chị?
Dialogue: 0,0:08:50.99,0:08:53.21,Default,,0,0,0,,Hikoichi, em cũng phải cố gắng lên nhé.
Dialogue: 0,0:08:53.23,0:08:55.15,Default,,0,0,0,,Nhanh nhanh trở nên ghê gớm\Nnhư Sendoh vậy đó.
Dialogue: 0,0:08:55.40,0:08:57.63,Default,,0,0,0,,Mặc kệ em, mau đi làm phóng viên đi.
Dialogue: 0,0:08:57.72,0:08:58.92,Default,,0,0,0,,Không thì sẽ giận đấy.
Dialogue: 0,0:09:17.65,0:09:21.95,Default,,0,0,0,,[Năm ngoái vẫn là\NRyonan và Takesato trong top bốn]
Dialogue: 0,0:09:33.97,0:09:37.88,Default,,0,0,0,,[mới một năm ngắn ngủi thôi\Nmà đã chênh lệch đến thế rồi.]
Dialogue: 0,0:09:51.95,0:09:53.55,Default,,0,0,0,,Bây giờ Shohoku\Nvẫn chưa đập vỡ trứng vịt được.
Dialogue: 0,0:09:53.57,0:09:55.77,Default,,0,0,0,,Cú úp rổ của Kiyota đáng sợ quá.
Dialogue: 0,0:09:55.79,0:09:57.51,Default,,0,0,0,,Đả kích lớn thật.
Dialogue: 0,0:10:00.92,0:10:03.59,Default,,0,0,0,,Đáng ghét,\Nrốt cuộc mấy người làm gì vậy, Shohoku?
Dialogue: 0,0:10:03.71,0:10:05.80,Default,,0,0,0,,Phấn chấn lên nào Hanamichi!
Dialogue: 0,0:10:24.47,0:10:27.02,Default,,0,0,0,,[Cái tên đó...]
Dialogue: 0,0:10:30.76,0:10:32.78,Default,,0,0,0,,Tôi đã xem trận đấu với Shoyo,
Dialogue: 0,0:10:33.02,0:10:35.51,Default,,0,0,0,,tâm trạng lúc úp rổ thành công như thế nào?
Dialogue: 0,0:10:35.99,0:10:38.15,Default,,0,0,0,,[Quả nhiên mình là người nổi tiếng.]
Dialogue: 0,0:10:38.74,0:10:40.66,Default,,0,0,0,,Cậu mãi mãi sẽ không biết được đâu.
Dialogue: 0,0:10:50.71,0:10:53.21,Default,,0,0,0,,[Thế mà lại giỡn mặt]
Dialogue: 0,0:10:55.19,0:10:58.34,Default,,0,0,0,,[với Sakuragi tôi.]
Dialogue: 0,0:11:31.29,0:11:33.02,Default,,0,0,0,,Cứ tiếp tục như thế thì không ổn lắm.
Dialogue: 0,0:11:35.15,0:11:38.75,Default,,0,0,0,,Nhất định phải nghĩ cách đuổi theo mới được.
Dialogue: 0,0:11:39.42,0:11:41.19,Default,,0,0,0,,Nhất định phải vào rổ trước.
Dialogue: 0,0:11:43.58,0:11:46.58,Default,,0,0,0,,- Hay lắm Mitsui.\N- Cố lên Mitchi!
Dialogue: 0,0:11:56.98,0:11:58.44,Default,,0,0,0,,Akagi, trông cậy vào cậu đấy.
Dialogue: 0,0:12:04.08,0:12:06.42,Default,,0,0,0,,Ngây thơ.
Dialogue: 0,0:12:07.34,0:12:08.17,Default,,0,0,0,,Khỉ Hoang.
Dialogue: 0,0:12:08.20,0:12:09.01,Default,,0,0,0,,Cú lừa.
Dialogue: 0,0:12:09.03,0:12:12.04,Default,,0,0,0,,Không thể nào,\Nsao số 10 đó có thể nhảy cao đến thế?
Dialogue: 0,0:12:18.65,0:12:19.95,Default,,0,0,0,,Tinh Tinh Bự!
Dialogue: 0,0:12:21.34,0:12:23.17,Default,,0,0,0,,Hay, Tinh Tinh Bự úp rổ!
Dialogue: 0,0:12:23.44,0:12:26.83,Default,,0,0,0,,Vào rồi, ghi điểm rồi!
Dialogue: 0,0:12:34.21,0:12:35.70,Default,,0,0,0,,Cậu bảo ai ngây thơ?
Dialogue: 0,0:12:37.42,0:12:39.42,Default,,0,0,0,,Đáng đời Khỉ Hoang.
Dialogue: 0,0:12:46.38,0:12:47.58,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:12:49.52,0:12:52.56,Default,,0,0,0,,Đừng quên sứ mệnh của mình,
Dialogue: 0,0:12:55.60,0:12:57.31,Default,,0,0,0,,rõ chưa?
Dialogue: 0,0:12:58.26,0:12:59.45,Default,,0,0,0,,Tinh Tinh Bự,
Dialogue: 0,0:13:12.70,0:13:14.63,Default,,0,0,0,,em nhất định sẽ cho anh thấy.
Dialogue: 0,0:13:16.84,0:13:18.74,Default,,0,0,0,,[Trận đấu đầu tiên của vòng chung kết,]
Dialogue: 0,0:13:18.77,0:13:20.69,Default,,0,0,0,,[trường cấp ba\Ntrực thuộc Đại học Kainan với Shohoku.]
Dialogue: 0,0:13:22.04,0:13:25.87,Default,,0,0,0,,[Trận đấu vừa bắt đầu,\Nbiểu hiện của Shohoku xuất sắc bất ngờ.]
Dialogue: 0,0:13:29.48,0:13:31.77,Default,,0,0,0,,[Dưới sự dẫn dắt và kỹ thuật\Ncùng khí thế của Akagi,]
Dialogue: 0,0:13:31.91,0:13:33.58,Default,,0,0,0,,[đội bóng vua trường cấp ba trực thuộc\NĐại học Kainan đã bị cắt chặt không buông.]
Dialogue: 0,0:13:33.87,0:13:35.77,Default,,0,0,0,,[Đối phương vẫn không thể vượt quá bốn điểm.]
Dialogue: 0,0:13:39.05,0:13:41.68,Default,,0,0,0,,[Mà trong mười phút của nửa trận đầu này...]
Dialogue: 0,0:13:46.60,0:13:48.92,Default,,0,0,0,,Tuyệt vời, chúng ta\Ngiành được bóng bật bảng rồi.
Dialogue: 0,0:13:50.01,0:13:53.37,Default,,0,0,0,,Hay, giành được bóng bật bảng rồi,\NSakuragi, giành tốt lắm, giao cho tôi.
Dialogue: 0,0:14:01.02,0:14:02.91,Default,,0,0,0,,Cứ từ từ mà ghi một điểm.
Dialogue: 0,0:14:03.15,0:14:05.05,Default,,0,0,0,,Làm tốt lắm Sakuragi!
Dialogue: 0,0:14:05.13,0:14:06.52,Default,,0,0,0,,Giành được giỏi quá.
Dialogue: 0,0:14:15.92,0:14:17.82,Default,,0,0,0,,Sakuragi đã biết bắt bóng bật bảng rồi.
Dialogue: 0,0:14:17.82,0:14:20.58,Default,,0,0,0,,Cậu ấy đã thành một chiến lực\Nkhông thể thiếu trong đội chúng ta.
Dialogue: 0,0:14:20.86,0:14:21.88,Default,,0,0,0,,Huấn luyện viên.
Dialogue: 0,0:14:22.08,0:14:24.28,Default,,0,0,0,,Ngay cả đội Kainan\Ncũng không thể ngăn được cậu ấy.
Dialogue: 0,0:14:25.99,0:14:27.33,Default,,0,0,0,,Nói đúng lắm.
Dialogue: 0,0:14:39.26,0:14:40.27,Default,,0,0,0,,Hay.
Dialogue: 0,0:14:42.85,0:14:45.28,Default,,0,0,0,,Tới đi.
Dialogue: 0,0:14:53.38,0:14:54.23,Default,,0,0,0,,Đáng ghét.
Dialogue: 0,0:14:54.95,0:14:56.48,Default,,0,0,0,,Đứng lại!
Dialogue: 0,0:15:03.59,0:15:05.36,Default,,0,0,0,,Nhảy lên rồi.
Dialogue: 0,0:15:12.17,0:15:13.07,Default,,0,0,0,,Hay!
Dialogue: 0,0:15:15.14,0:15:16.94,Default,,0,0,0,,Nguy hiểm!
Dialogue: 0,0:15:21.79,0:15:24.26,Default,,0,0,0,,- Sakuragi!\N- Hanamichi!
Dialogue: 0,0:15:24.26,0:15:25.40,Default,,0,0,0,,Không sao chứ?
Dialogue: 0,0:15:31.74,0:15:35.14,Default,,0,0,0,,- Rốt cuộc sức lực tràn trề của cậu ta là gì thế?\N- Không có bị thương chứ?
Dialogue: 0,0:15:36.31,0:15:38.58,Default,,0,0,0,,Thầy không sao chứ huấn luyện viên?
Dialogue: 0,0:15:39.76,0:15:42.55,Default,,0,0,0,,Thế mà lại lấy huấn luyện viên làm đệm lót.
Dialogue: 0,0:15:43.71,0:15:45.67,Default,,0,0,0,,Cái tên đáng sợ này.
Dialogue: 0,0:15:49.46,0:15:51.16,Default,,0,0,0,,[Cậu ta chạy nhanh thật đấy.]
Dialogue: 0,0:15:54.50,0:15:57.24,Default,,0,0,0,,[Chỉ so về lượng vận động\Nthì đã vượt qua Maki rồi.]
Dialogue: 0,0:15:57.56,0:16:00.49,Default,,0,0,0,,[Sakuragi chỉ mới chơi bóng rổ có ba tháng.]
Dialogue: 0,0:16:12.34,0:16:15.04,Default,,0,0,0,,Lại giành được rồi.
Dialogue: 0,0:16:16.46,0:16:19.82,Default,,0,0,0,,Nhìn đi, đây chính là\Nthực lực của vua bóng bật bảng.
Dialogue: 0,0:16:20.06,0:16:20.96,Default,,0,0,0,,Thật là thú vị.
Dialogue: 0,0:16:21.63,0:16:24.21,Default,,0,0,0,,Số 10, bây giờ tôi sẽ kèm cậu thật chặt!
Dialogue: 0,0:16:27.64,0:16:28.49,Default,,0,0,0,,Maki?
Dialogue: 0,0:16:29.41,0:16:33.51,Default,,0,0,0,,Cầu thủ đứng đầu tỉnh Kanagawa,\NMaki bắt đầu chơi nghiêm túc rồi.
Dialogue: 0,0:16:37.99,0:16:39.74,Default,,0,0,0,,Anh học lớp mấy?
Dialogue: 0,0:16:40.90,0:16:42.20,Default,,0,0,0,,Anh là học sinh cấp ba?
Dialogue: 0,0:16:42.22,0:16:43.86,Default,,0,0,0,,Đồ... đồ khốn!
Dialogue: 0,0:16:43.97,0:16:46.46,Default,,0,0,0,,Này Khỉ Hoang, cậu gian xảo quá đấy.
Dialogue: 0,0:16:46.46,0:16:48.73,Default,,0,0,0,,Thế mà lấy đàn anh đến hỗ trợ, đê tiện quá.
Dialogue: 0,0:16:48.82,0:16:50.08,Default,,0,0,0,,Đồ ngu!
Dialogue: 0,0:16:50.11,0:16:52.64,Default,,0,0,0,,Maki là học sinh lớp 12 có lí lịch rõ ràng.
Dialogue: 0,0:16:52.83,0:16:54.22,Default,,0,0,0,,Anh ấy mới 17 tuổi thôi.
Dialogue: 0,0:16:54.38,0:16:56.94,Default,,0,0,0,,Cái gì? 17 tuổi?
Dialogue: 0,0:17:01.14,0:17:02.77,Default,,0,0,0,,Tôi sẽ không bị cậu lừa đâu.
Dialogue: 0,0:17:02.79,0:17:05.20,Default,,0,0,0,,Sao anh ta chỉ mới 17 tuổi chứ?\NCái con Khỉ Hoang kia im mồm đi.
Dialogue: 0,0:17:05.62,0:17:09.25,Default,,0,0,0,,Trong trận đấu cấm nói chuyện,\Nhai đội tập trung vào.
Dialogue: 0,0:17:09.51,0:17:10.69,Default,,0,0,0,,Đồ ngốc.
Dialogue: 0,0:17:13.00,0:17:14.21,Default,,0,0,0,,Lần này chỉ là cảnh cáo,
Dialogue: 0,0:17:14.23,0:17:16.72,Default,,0,0,0,,lần sao mà còn cãi nhau nữa\Nthì cấm cậu ra sân.
Dialogue: 0,0:17:17.16,0:17:19.51,Default,,0,0,0,,Để ý chút đi, nhất là số 10 của hai đội đấy.
Dialogue: 0,0:17:20.38,0:17:22.56,Default,,0,0,0,,Đồ ngu hết thuốc chữa.
Dialogue: 0,0:17:23.68,0:17:25.05,Default,,0,0,0,,Thật là...
Dialogue: 0,0:17:25.41,0:17:27.53,Default,,0,0,0,,Hại não thật.
Dialogue: 0,0:17:31.81,0:17:34.32,Default,,0,0,0,,Thế mà cậu ta lại đùa giỡn Maki.
Dialogue: 0,0:17:34.67,0:17:36.58,Default,,0,0,0,,Bởi vì là Sakuragi mà.
Dialogue: 0,0:17:37.20,0:17:39.50,Default,,0,0,0,,Tên nhóc không biết trời cao đất dày.
Dialogue: 0,0:17:39.53,0:17:41.31,Default,,0,0,0,,Đúng là không sợ chết.
Dialogue: 0,0:17:45.62,0:17:48.02,Default,,0,0,0,,Akagi trông cậu ta còn già hơn tôi nữa.
Dialogue: 0,0:17:48.63,0:17:49.54,Default,,0,0,0,,Maki!
Dialogue: 0,0:17:54.76,0:17:55.90,Default,,0,0,0,,Anh nói như thế...
Dialogue: 0,0:17:56.10,0:17:56.91,Default,,0,0,0,,Đừng nhìn tôi.
Dialogue: 0,0:17:58.31,0:17:59.85,Default,,0,0,0,,Thì ra anh ấy vẫn luôn để ý.
Dialogue: 0,0:18:00.70,0:18:02.03,Default,,0,0,0,,Tới đi, Sakuragi!
Dialogue: 0,0:18:02.03,0:18:04.10,Default,,0,0,0,,Được lắm chú, tôi tới đây.
Dialogue: 0,0:18:15.17,0:18:17.74,Default,,0,0,0,,Không biết trận đấu thế nào rồi?
Dialogue: 0,0:18:31.20,0:18:34.23,Default,,0,0,0,,Dưới rổ là thiên hạ của tôi!
Dialogue: 0,0:18:37.23,0:18:39.62,Default,,0,0,0,,Thế mà Maki\Nlại kèm chặt cái cậu Sakuragi lớp 10 đó.
Dialogue: 0,0:18:39.90,0:18:42.33,Default,,0,0,0,,Đáng ghét.
Dialogue: 0,0:18:42.98,0:18:44.81,Default,,0,0,0,,Maki, anh chặn hay lắm.
Dialogue: 0,0:18:46.70,0:18:48.50,Default,,0,0,0,,Chờ đã.
Dialogue: 0,0:18:54.82,0:18:58.18,Default,,0,0,0,,Kém sáu điểm,\Nkéo giãn điểm số rồi, không hổ là Kainan.
Dialogue: 0,0:18:59.12,0:19:01.03,Default,,0,0,0,,Đáng ghét, cái ông bác đó.
Dialogue: 0,0:19:02.25,0:19:03.40,Default,,0,0,0,,Hanamichi,
Dialogue: 0,0:19:04.93,0:19:06.21,Default,,0,0,0,,thử trò đó xem nào.
Dialogue: 0,0:19:06.66,0:19:08.26,Default,,0,0,0,,Nhưng không ngờ tên nhóc Sakuragi này
Dialogue: 0,0:19:08.28,0:19:11.10,Default,,0,0,0,,chẳng sợ hãi\Nkhi đối mặt với Maki của Kainan gì cả.
Dialogue: 0,0:19:11.74,0:19:14.08,Default,,0,0,0,,Chúng ta ở bên cạnh quan sát thôi\Nmà đã đổ mồ hôi lạnh rồi.
Dialogue: 0,0:19:14.98,0:19:19.94,Default,,0,0,0,,Khi đấy Sakuragi mới vào trường\Nđã khiêu chiến đàn anh Agaki đấy.
Dialogue: 0,0:19:21.78,0:19:25.50,Default,,0,0,0,,Maki, không cần đích thân\Nkèm cái tên lanh chanh vô phép này đâu.
Dialogue: 0,0:19:25.59,0:19:27.42,Default,,0,0,0,,Em kèm cậu ta là được rồi.
Dialogue: 0,0:19:28.08,0:19:31.24,Default,,0,0,0,,Tôi kèm cậu là đã xem như đề cao cậu rồi.
Dialogue: 0,0:19:32.10,0:19:33.48,Default,,0,0,0,,Cái con Khỉ Hoang này.
Dialogue: 0,0:19:34.03,0:19:37.51,Default,,0,0,0,,- Hanamichi!\N- Số 10 tôi tới đây!
Dialogue: 0,0:19:46.71,0:19:47.98,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:19:48.40,0:19:49.80,Default,,0,0,0,,Thành công rồi.
Dialogue: 0,0:19:59.28,0:20:02.26,Default,,0,0,0,,Vừa nãy không có giả trân chút nào hết,\Ntự nhiên lắm Hanamichi.
Dialogue: 0,0:20:02.28,0:20:03.10,Default,,0,0,0,,Ryota!
Dialogue: 0,0:20:07.29,0:20:09.97,Default,,0,0,0,,[Shoyo cũng thế đấy,\Nbị tuyển thủ không tính toán phá rối]
Dialogue: 0,0:20:10.00,0:20:11.98,Default,,0,0,0,,[mới hỗn loạn.]
Dialogue: 0,0:20:14.80,0:20:17.60,Default,,0,0,0,,Haruko, mình ghi điểm rồi.
Dialogue: 0,0:20:18.00,0:20:20.95,Default,,0,0,0,,Hay lắm Hanamichi!
Dialogue: 0,0:20:21.06,0:20:23.53,Default,,0,0,0,,Hanamichi, động tác giả hay lắm.
Dialogue: 0,0:20:23.93,0:20:25.18,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:20:31.46,0:20:33.31,Default,,0,0,0,,[Vì biểu hiện bất ngờ của Sakuragi]
Dialogue: 0,0:20:33.34,0:20:35.80,Default,,0,0,0,,[mà Shohoku đã theo sát đội bóng vua Kainan.]
Dialogue: 0,0:20:40.29,0:20:43.75,Default,,0,0,0,,[Huấn luyện viên của Kainan]
Dialogue: 0,0:20:44.36,0:20:47.43,Default,,0,0,0,,[đã bắt đầu hành động nhắm vào Sakuragi\NHanamichi trong tình trạng xuất sắc nhất.]
Dialogue: 0,0:20:52.10,0:20:54.88,Default,,0,0,0,,[Phải nghĩ cách\Nđuổi cậu ta ra khỏi sân mới được.]
Dialogue: 0,0:21:14.56,0:21:17.36,Default,,0,0,0,,♫ Trong giấc mơ nhếch nhác thảm hại ♫
Dialogue: 0,0:21:17.97,0:21:20.41,Default,,0,0,0,,♫ Tôi bỗng choàng tỉnh ♫
Dialogue: 0,0:21:22.16,0:21:26.28,Default,,0,0,0,,♫ Lại một buổi sớm với ánh nắng rực rỡ ♫
Dialogue: 0,0:21:30.21,0:21:36.36,Default,,0,0,0,,♫ Nghe bài hát mình thích ♫
Dialogue: 0,0:21:37.67,0:21:42.84,Default,,0,0,0,,♫ Mặc chiếc áo sơ mi sạch sẽ ♫
Dialogue: 0,0:21:44.66,0:21:47.21,Default,,0,0,0,,♫ Đêm qua ♫
Dialogue: 0,0:21:47.90,0:21:50.73,Default,,0,0,0,,♫ Có người nói với tôi với vẻ mệt mỏi rằng ♫
Dialogue: 0,0:21:50.73,0:21:52.73,Default,,0,0,0,,♫ Muốn tìm kiếm kích thích ♫
Dialogue: 0,0:21:52.73,0:21:55.17,Default,,0,0,0,,♫ Muốn đột phá thực tại ♫
Dialogue: 0,0:21:55.17,0:21:58.67,Default,,0,0,0,,♫ Đừng lún sâu như thế nữa ♫
Dialogue: 0,0:21:59.01,0:22:03.28,Default,,0,0,0,,♫ Hãy nắm giữ khoảnh khắc tỏa sáng ♫
Dialogue: 0,0:22:03.28,0:22:06.71,Default,,0,0,0,,♫ Tôi phải sống đúng với bản thân mình ♫
Dialogue: 0,0:22:07.28,0:22:10.98,Default,,0,0,0,,♫ Có lẽ sẽ hối hận, có lẽ không hoàn hảo ♫
Dialogue: 0,0:22:11.38,0:22:15.31,Default,,0,0,0,,♫ Nhưng đã không còn cô đơn nữa wow ♫
Dialogue: 0,0:22:15.71,0:22:21.69,Default,,0,0,0,,♫ Giọt nước mắt tràn mi\Nlại là thứ đẹp đẽ nhất ♫
Dialogue: 0,0:22:22.56,0:22:26.38,Default,,0,0,0,,♫ Tôi lại bước lên hành trình vô tận ♫
Dialogue: 0,0:22:26.38,0:22:30.36,Default,,0,0,0,,♫ Đi thẳng về phía trước,\Nkhông bao giờ lùi bước ♫
Dialogue: 0,0:22:37.36,0:22:39.00,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:40.49,0:22:42.79,Default,,0,0,0,,Cái tên kỳ lạ nhỏ con đó là ai thế?
Dialogue: 0,0:22:42.92,0:22:44.83,Default,,0,0,0,,Miyamasu, cậu vào thay Jin đi.
Dialogue: 0,0:22:44.85,0:22:46.91,Default,,0,0,0,,Cố gắng có thể chọc giận Sakuragi.
Dialogue: 0,0:22:47.25,0:22:49.25,Default,,0,0,0,,Nhưng không cần phí sức phòng thủ.
Dialogue: 0,0:22:49.67,0:22:52.59,Default,,0,0,0,,Không thể bị mê hoặc bởi kỹ thuật giành bóng\Nvà sức bật hơn người của cậu ta được.
Dialogue: 0,0:22:52.98,0:22:55.38,Default,,0,0,0,,Cậu ta là một kẻ ngoài ngành\Nchỉ có kinh nghiệm ba tháng.
Dialogue: 0,0:22:55.72,0:22:58.75,Default,,0,0,0,,Khốn khiếp, từ đầu đến cuối\Nanh chưa nhúc nhích gì cả.
Dialogue: 0,0:22:58.75,0:23:00.02,Default,,0,0,0,,Rốt cuộc có muốn chơi bóng không?
Dialogue: 0,0:23:00.35,0:23:01.34,Default,,0,0,0,,"Cao thủ bóng rổ."
Dialogue: 0,0:23:01.37,0:23:03.85,Default,,0,0,0,,"Vũ khi bí mật khống chế Sakuragi."
Dialogue: 0,0:23:03.87,0:23:05.20,Default,,0,0,0,,Đừng bỏ qua đấy.
