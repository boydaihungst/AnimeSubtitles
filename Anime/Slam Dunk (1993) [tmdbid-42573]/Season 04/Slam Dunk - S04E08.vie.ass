Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.74,0:00:20.76,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.80,0:00:24.05,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.80,0:00:30.32,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.55,0:00:36.59,Default,,0,0,0,,♫ Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.51,0:00:44.35,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.15,0:00:51.15,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.34,0:00:57.15,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.24,0:01:03.22,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.31,0:01:10.05,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.99,0:01:19.94,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:20.06,0:01:26.09,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.23,0:01:32.00,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:32.10,0:01:40.50,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:55.26,0:02:00.56,Default,,0,0,0,,[Lần đầu tiên đội bóng Shohoku\Nvào được giải toàn quốc,]
Dialogue: 0,0:02:00.66,0:02:03.28,Default,,0,0,0,,[thành tích này đã khiến cho đội bóng\Ntrở thành tiêu điểm của cả trường.]
Dialogue: 0,0:02:06.35,0:02:09.18,Default,,0,0,0,,[Đặc biệt là các cô gái trong trường,\Nhoàn toàn bị thu hút bởi Rukawa.]
Dialogue: 0,0:02:09.37,0:02:11.08,Default,,0,0,0,,[Điều này khiến cho Hanamichi\Nvô cùng phẫn nộ.]
Dialogue: 0,0:02:12.03,0:02:16.11,Default,,0,0,0,,[Nhưng dưới sự cổ vũ của Haruko,\NHanamichi lại có thêm một ý chí phấn đấu mới.]
Dialogue: 0,0:02:18.30,0:02:19.15,Default,,0,0,0,,[Tiếp đến,]
Dialogue: 0,0:02:19.30,0:02:22.33,Default,,0,0,0,,[vì muốn đạt được mục tiêu xưng bá toàn quốc,\Nđội bóng Shohoku]
Dialogue: 0,0:02:22.48,0:02:24.80,Default,,0,0,0,,[đã bắt đầu luyện tập vất vả.]
Dialogue: 0,0:02:27.47,0:02:30.06,Default,,0,0,0,,[Nhưng trong cuộc tập luyện mãnh liệt này,]
Dialogue: 0,0:02:30.18,0:02:34.29,Default,,0,0,0,,[lại không ai biết được ý nghĩ giấu sâu\Ntrong lòng của Rukawa.]
Dialogue: 0,0:02:35.84,0:02:44.87,Default,,0,0,0,,[Dã tâm của Rukawa]
Dialogue: 0,0:02:38.48,0:02:40.04,Default,,0,0,0,,[Dã tâm của Rukawa!]
Dialogue: 0,0:03:07.48,0:03:09.38,Default,,0,0,0,,Mày làm gì vậy hả, Rukawa?
Dialogue: 0,0:03:09.55,0:03:11.28,Default,,0,0,0,,Muộn vậy rồi còn lề mề nữa!
Dialogue: 0,0:03:12.31,0:03:13.53,Default,,0,0,0,,Không phải đã có quy định rồi sao?
Dialogue: 0,0:03:13.53,0:03:15.60,Default,,0,0,0,,Học sinh lớp 10 phải đến dọn dẹp\Nsân bóng trước khi luyện tập kia mà!
Dialogue: 0,0:03:17.15,0:03:19.80,Default,,0,0,0,,Đồ ngốc, mày đừng có tự đại quá đấy!
Dialogue: 0,0:03:19.94,0:03:20.77,Default,,0,0,0,,[Sao cơ?]
Dialogue: 0,0:03:21.69,0:03:23.43,Default,,0,0,0,,Ánh mắt đó là thế nào?
Dialogue: 0,0:03:23.53,0:03:24.64,Default,,0,0,0,,Mày có ý kiến với tao đúng không?
Dialogue: 0,0:03:24.80,0:03:26.43,Default,,0,0,0,,Được rồi Sakuragi, đừng mắng nữa!
Dialogue: 0,0:03:26.85,0:03:29.45,Default,,0,0,0,,Cậu cũng vừa mới tới thôi mà.
Dialogue: 0,0:03:29.60,0:03:31.96,Default,,0,0,0,,Tôi thấy cậu\Nkhông có tư cách mắng người khác.
Dialogue: 0,0:03:34.00,0:03:35.62,Default,,0,0,0,,Cậu nói gì đó?
Dialogue: 0,0:03:35.74,0:03:37.26,Default,,0,0,0,,Không, không có gì.
Dialogue: 0,0:03:40.17,0:03:44.01,Default,,0,0,0,,Sakuragi, mọi người đều\Ncó thể hòa thuận với nhau mà.
Dialogue: 0,0:03:44.16,0:03:46.46,Default,,0,0,0,,Tất cả chúng ta đều là thành viên trong đội,
Dialogue: 0,0:03:50.83,0:03:52.93,Default,,0,0,0,,cậu và Rukawa đều là học sinh lớp 10,
Dialogue: 0,0:03:53.06,0:03:54.83,Default,,0,0,0,,đã trở thành thành viên chính thức của đội,
Dialogue: 0,0:03:54.97,0:03:57.61,Default,,0,0,0,,cũng đã rất có tiếng trong tỉnh.
Dialogue: 0,0:03:58.49,0:04:01.14,Default,,0,0,0,,Nói thật, tôi rất ngưỡng mộ hai cậu.
Dialogue: 0,0:04:38.32,0:04:39.28,Default,,0,0,0,,Nhưng mà,
Dialogue: 0,0:04:39.45,0:04:41.97,Default,,0,0,0,,tôi thật sự rất vui mừng
Dialogue: 0,0:04:42.08,0:04:44.23,Default,,0,0,0,,vì hai cậu là thành viên\Ncủa đội bóng rổ chúng ta,
Dialogue: 0,0:04:44.31,0:04:45.75,Default,,0,0,0,,không chừng ngày nào đó trong tương lai,
Dialogue: 0,0:04:45.92,0:04:50.76,Default,,0,0,0,,tôi cũng có thể như Sakuragi,\Ncòn có Rukawa, có thể đi thi đấu.
Dialogue: 0,0:04:50.94,0:04:55.43,Default,,0,0,0,,Chỉ nghĩ đến đó thôi là tôi đã rất hăng hái,\Nthật sự rất cảm động.
Dialogue: 0,0:04:57.71,0:05:01.94,Default,,0,0,0,,Bởi vì tôi rất muốn thi đấu chung với các cậu.
Dialogue: 0,0:05:02.72,0:05:04.65,Default,,0,0,0,,Đúng vậy, tôi cũng phải thật cố gắng!
Dialogue: 0,0:05:13.49,0:05:15.26,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:05:18.27,0:05:21.54,Default,,0,0,0,,Các cậu thật đáng khen ngợi!
Dialogue: 0,0:05:21.77,0:05:23.50,Default,,0,0,0,,Mặc dù thiên tài Sakuragi tôi đây\Nvới đám người bình thường các cậu
Dialogue: 0,0:05:23.61,0:05:24.78,Default,,0,0,0,,cách nhau một trời một vực,
Dialogue: 0,0:05:24.89,0:05:26.08,Default,,0,0,0,,nhưng các cậu có được ý chí đó\Nthật sự rất đáng khen ngợi!
Dialogue: 0,0:05:26.20,0:05:27.32,Default,,0,0,0,,Tôi quá khâm phục các cậu!
Dialogue: 0,0:05:30.79,0:05:34.17,Default,,0,0,0,,Nhưng, tôi thật sự rất khâm phục\Ncác cậu có tinh thần này,
Dialogue: 0,0:05:34.37,0:05:37.27,Default,,0,0,0,,người bình thường chỉ cần không ngừng\Nnỗ lực, có lẽ sẽ có thể có được một tí hy vọng,
Dialogue: 0,0:05:37.40,0:05:39.91,Default,,0,0,0,,dù cho các cậu không cách nào đạt được\Ntrình độ như thiên tài Sakuragi này.
Dialogue: 0,0:05:40.13,0:05:42.12,Default,,0,0,0,,Nhưng mà nói thật với các cậu,
Dialogue: 0,0:05:42.24,0:05:45.23,Default,,0,0,0,,muốn đạt tới trình độ như Rukawa\Nthì không cần phải mất nhiều thời gian đâu.
Dialogue: 0,0:05:45.31,0:05:48.15,Default,,0,0,0,,Đương nhiên rồi, nếu các cậu vì thế\Nmà tự mãn thì không hụt hẫng rồi!
Dialogue: 0,0:05:49.55,0:05:51.97,Default,,0,0,0,,Đừng đứng đấy nói khoác nữa,\Nmau lau dọn đi, đồ ngốc!
Dialogue: 0,0:05:52.07,0:05:53.88,Default,,0,0,0,,Mày nói gì đó, Rukawa?
Dialogue: 0,0:05:53.98,0:05:56.47,Default,,0,0,0,,Mày đi trễ mà còn dạy đời tao! Chết tiệt!
Dialogue: 0,0:05:56.65,0:05:57.84,Default,,0,0,0,,Bỏ tôi ra!
Dialogue: 0,0:05:58.18,0:05:59.48,Default,,0,0,0,,Đừng vậy mà!
Dialogue: 0,0:05:59.69,0:06:01.85,Default,,0,0,0,,Tránh ra! Để tôi qua đó!
Dialogue: 0,0:06:02.02,0:06:03.11,Default,,0,0,0,,Được rồi, Rukawa!
Dialogue: 0,0:06:14.27,0:06:15.20,Default,,0,0,0,,Yayoi.
Dialogue: 0,0:06:15.97,0:06:20.42,Default,,0,0,0,,59 đội bóng của giải đấu toàn quốc\Nđã xuất phát rồi,
Dialogue: 0,0:06:20.80,0:06:22.12,Default,,0,0,0,,tại sao bây giờ
Dialogue: 0,0:06:22.24,0:06:24.26,Default,,0,0,0,,cô lại lên cơn thần kinh muốn\Nphỏng vấn Sendoh của Ryonan vậy?
Dialogue: 0,0:06:24.80,0:06:25.96,Default,,0,0,0,,Tôi không có thần kinh!
Dialogue: 0,0:06:26.17,0:06:27.17,Default,,0,0,0,,Tôi không sai,
Dialogue: 0,0:06:27.27,0:06:29.69,Default,,0,0,0,,Sendoh đúng là một cầu thủ xuất sắc,
Dialogue: 0,0:06:30.08,0:06:34.06,Default,,0,0,0,,nhưng đó chỉ là trong phạm vi\Nkhu vực tỉnh Kanagawa thôi.
Dialogue: 0,0:06:34.22,0:06:36.50,Default,,0,0,0,,Nếu so sánh cậu ta với\Ncác cầu thủ hàng đầu toàn quốc,
Dialogue: 0,0:06:36.61,0:06:37.65,Default,,0,0,0,,thì cậu ta không có gì nổi bật cả.
Dialogue: 0,0:06:38.33,0:06:39.56,Default,,0,0,0,,Tổng biên tập!
Dialogue: 0,0:06:41.10,0:06:41.93,Default,,0,0,0,,Anh nghe rõ đây.
Dialogue: 0,0:06:42.16,0:06:43.76,Default,,0,0,0,,Biểu hiện trên sân bóng của Sendoh
Dialogue: 0,0:06:43.76,0:06:45.57,Default,,0,0,0,,đủ để so tài ngang sức với Maki của Kainan,
Dialogue: 0,0:06:45.67,0:06:46.59,Default,,0,0,0,,có sự so sánh này,
Dialogue: 0,0:06:46.72,0:06:48.69,Default,,0,0,0,,Sendoh chính là cầu thủ\Nhàng đầu của toàn quốc!
Dialogue: 0,0:06:48.69,0:06:52.03,Default,,0,0,0,,Sự thật này không thể nào rõ ràng hơn,\Ntôi có thể đảm bảo!
Dialogue: 0,0:06:52.92,0:06:56.99,Default,,0,0,0,,Nhưng Ryonan không thể trở thành\Nđại diện của tỉnh Kanagawa,
Dialogue: 0,0:06:58.17,0:07:00.14,Default,,0,0,0,,Sendoh cũng bị thua,
Dialogue: 0,0:07:01.07,0:07:02.37,Default,,0,0,0,,không cần biết có bao nhiêu lý do,
Dialogue: 0,0:07:02.51,0:07:04.37,Default,,0,0,0,,đây là sự thật không thể thay đổi.
Dialogue: 0,0:07:04.84,0:07:05.81,Default,,0,0,0,,Nhưng mà...
Dialogue: 0,0:07:06.11,0:07:08.30,Default,,0,0,0,,Tôi nhắc lại một lần nữa với cô,
Dialogue: 0,0:07:08.74,0:07:10.13,Default,,0,0,0,,bây giờ thứ mà chúng ta cần phải đăng tin
Dialogue: 0,0:07:10.27,0:07:14.14,Default,,0,0,0,,chính là những cầu thủ có tiền đồ mở rộng\Ncó thể tham gia giải đấu toàn quốc,
Dialogue: 0,0:07:14.74,0:07:16.60,Default,,0,0,0,,đọc giả cũng muốn\Nnhìn thấy những bài như vậy.
Dialogue: 0,0:07:16.96,0:07:17.93,Default,,0,0,0,,Tôi có thể nói rõ hơn với cô,
Dialogue: 0,0:07:18.02,0:07:20.09,Default,,0,0,0,,ngoài họ ra, cô viết những bài báo khác,
Dialogue: 0,0:07:20.22,0:07:21.18,Default,,0,0,0,,tôi đều sẽ trả lại hết.
Dialogue: 0,0:07:21.29,0:07:23.57,Default,,0,0,0,,Anh muốn trả về hay làm gì đấy thì tùy anh,
Dialogue: 0,0:07:23.74,0:07:25.82,Default,,0,0,0,,dù sao cách nghĩ của tôi\Ntuyệt đối không thay đổi!
Dialogue: 0,0:07:25.95,0:07:26.71,Default,,0,0,0,,Yayoi!
Dialogue: 0,0:07:28.65,0:07:30.12,Default,,0,0,0,,Cô quá cứng đầu!
Dialogue: 0,0:07:30.32,0:07:31.65,Default,,0,0,0,,Đấy là sở trường duy nhất của tôi!
Dialogue: 0,0:07:34.15,0:07:35.57,Default,,0,0,0,,Đàn chị Aida sao thế?
Dialogue: 0,0:07:35.57,0:07:39.08,Default,,0,0,0,,Hình như chị ấy rất kiên quyết\Nvới cầu thủ Sendoh đó, kỳ lạ quá!
Dialogue: 0,0:07:39.16,0:07:40.61,Default,,0,0,0,,Đương nhiên rồi.
Dialogue: 0,0:07:40.88,0:07:45.39,Default,,0,0,0,,Biểu hiện của Sendoh đến giờ\Nvẫn in sâu vào đầu chị ấy.
Dialogue: 0,0:08:03.50,0:08:05.85,Default,,0,0,0,,Tôi có thể hiểu được tâm trạng của chị Aida.
Dialogue: 0,0:08:06.32,0:08:08.20,Default,,0,0,0,,Vận may của Sendoh không tốt,\Nmất đi cơ hội tham gia giải đấu toàn quốc.
Dialogue: 0,0:08:08.20,0:08:09.29,Default,,0,0,0,,Cho dù là thế,
Dialogue: 0,0:08:09.71,0:08:12.38,Default,,0,0,0,,chị ấy vẫn muốn tất cả người hâm mộ\Nbóng rổ trên toàn quốc
Dialogue: 0,0:08:12.55,0:08:15.40,Default,,0,0,0,,biết được sự tồn tại của\Nthiên tài bóng rổ Sendoh.
Dialogue: 0,0:08:15.50,0:08:17.24,Default,,0,0,0,,Tôi phải học hỏi tinh thần này\Ncủa chị ấy mới được!
Dialogue: 0,0:08:17.39,0:08:21.52,Default,,0,0,0,,Cộng thêm việc Sendoh quá đẹp trai,\Nđẹp trai như thế đúng là quá tuyệt vời!
Dialogue: 0,0:08:21.62,0:08:23.47,Default,,0,0,0,,Đúng là đám con gái!
Dialogue: 0,0:08:24.33,0:08:25.28,Default,,0,0,0,,Cậu vừa nói gì đấy?
Dialogue: 0,0:08:25.42,0:08:27.05,Default,,0,0,0,,Không, tôi không nói gì cả!
Dialogue: 0,0:08:32.07,0:08:33.26,Default,,0,0,0,,Chị Aida, chị sao vậy?
Dialogue: 0,0:08:33.35,0:08:36.19,Default,,0,0,0,,Bây giờ trông chị khác hoàn toàn với khi nãy.
Dialogue: 0,0:08:39.49,0:08:40.94,Default,,0,0,0,,Vừa nãy nói thì nói thế,
Dialogue: 0,0:08:41.12,0:08:43.24,Default,,0,0,0,,tôi càng lúc càng cảm thấy không có tự tin.
Dialogue: 0,0:08:44.51,0:08:46.90,Default,,0,0,0,,Có lẽ tổng biên tập nói đúng,
Dialogue: 0,0:08:47.31,0:08:51.03,Default,,0,0,0,,không chừng sự hứng thú của đọc giả đã\Nchuyển hướng sang giải đấu toàn quốc hết rồi.
Dialogue: 0,0:08:52.03,0:08:53.92,Default,,0,0,0,,Mặc kệ năng lực của Sendoh giỏi thế nào,
Dialogue: 0,0:08:54.08,0:08:57.16,Default,,0,0,0,,nhiều người vẫn không thể xem\Ncậu ta chơi ở giải đấu toàn quốc.
Dialogue: 0,0:08:57.27,0:08:58.47,Default,,0,0,0,,Là vậy sao?
Dialogue: 0,0:08:58.63,0:09:03.50,Default,,0,0,0,,Nếu em là đọc giả, cầu thủ giỏi chính là giỏi,
Dialogue: 0,0:09:03.77,0:09:05.60,Default,,0,0,0,,mặc kệ có vào được giải đấu toàn quốc\Nhay không,
Dialogue: 0,0:09:05.60,0:09:07.34,Default,,0,0,0,,thì em cũng sẽ tìm hiểu anh ta.
Dialogue: 0,0:09:10.00,0:09:13.49,Default,,0,0,0,,Xin lỗi, em ngây thơ vậy đấy,
Dialogue: 0,0:09:13.49,0:09:14.23,Default,,0,0,0,,cho nên mãi không thấy tiến bộ.
Dialogue: 0,0:09:15.60,0:09:16.67,Default,,0,0,0,,Nakamura!
Dialogue: 0,0:09:16.82,0:09:17.41,Default,,0,0,0,,Vâng.
Dialogue: 0,0:09:18.02,0:09:20.65,Default,,0,0,0,,Không ngờ thỉnh thoảng\Ncậu cũng nói được vài tiếng người,
Dialogue: 0,0:09:23.01,0:09:24.44,Default,,0,0,0,,mặc kệ người nói gì,
Dialogue: 0,0:09:24.55,0:09:26.39,Default,,0,0,0,,người lợi hại chính là lợi hại!
Dialogue: 0,0:09:27.39,0:09:30.20,Default,,0,0,0,,Hơn nữa tôi viết bài về Sendoh
Dialogue: 0,0:09:30.41,0:09:32.47,Default,,0,0,0,,không có nghĩa là bài này của tôi\Nkhông liên quan đến giải đấu toàn quốc!
Dialogue: 0,0:09:34.26,0:09:35.28,Default,,0,0,0,,Tôi còn viết về
Dialogue: 0,0:09:36.37,0:09:40.41,Default,,0,0,0,,một cầu thủ mới không\Nhơn kém gì cậu ta - Rukawa!
Dialogue: 0,0:09:40.59,0:09:44.04,Default,,0,0,0,,Xem xem Rukawa có thể đạt được\Nthành tích gì ở giải đấu toàn quốc.
Dialogue: 0,0:09:45.36,0:09:47.63,Default,,0,0,0,,Thế nào? Nghe rất thú vị đúng không?
Dialogue: 0,0:09:47.77,0:09:49.60,Default,,0,0,0,,Được đó!
Dialogue: 0,0:09:50.40,0:09:53.40,Default,,0,0,0,,Thật ra Nakamura cậu cũng dần dần\Nra dáng một phóng viên rồi đấy.
Dialogue: 0,0:09:53.40,0:09:54.94,Default,,0,0,0,,Cậu nói xem có phải không?
Dialogue: 0,0:09:55.58,0:09:56.79,Default,,0,0,0,,Là vậy sao ạ?
Dialogue: 0,0:09:56.94,0:09:59.35,Default,,0,0,0,,Nhờ cậu mà tôi đã có lại tâm trạng rồi!
Dialogue: 0,0:09:59.97,0:10:01.52,Default,,0,0,0,,Được rồi, tôi sẽ không thua đâu!
Dialogue: 0,0:10:01.67,0:10:04.42,Default,,0,0,0,,Tôi sẽ cho mọi người biết được\Ný chí của cô gái Osaka!
Dialogue: 0,0:10:04.62,0:10:06.22,Default,,0,0,0,,Ý chí chiến đấu này của chị Aida!
Dialogue: 0,0:10:08.36,0:10:10.45,Default,,0,0,0,,Tôi nghĩ bây giờ chúng ta đi vẫn còn kịp đấy.
Dialogue: 0,0:10:15.17,0:10:16.90,Default,,0,0,0,,Chúng ta đi thôi, Nakamura!
Dialogue: 0,0:10:17.26,0:10:18.88,Default,,0,0,0,,Đợi đã, chị đi đâu vậy?
Dialogue: 0,0:10:19.53,0:10:21.71,Default,,0,0,0,,Hôm nay còn buổi họp biên tập nữa!
Dialogue: 0,0:10:21.84,0:10:23.53,Default,,0,0,0,,Chị Aida!
Dialogue: 0,0:10:27.57,0:10:28.20,Default,,0,0,0,,Akagi.
Dialogue: 0,0:10:29.11,0:10:30.94,Default,,0,0,0,,Nếu lần trước chúng ta thua Ryonan,
Dialogue: 0,0:10:31.09,0:10:34.14,Default,,0,0,0,,e là hai chúng ta sẽ không còn cơ hội
Dialogue: 0,0:10:34.14,0:10:35.26,Default,,0,0,0,,tiếp tục chơi bóng như vậy nữa,
Dialogue: 0,0:10:36.21,0:10:37.67,Default,,0,0,0,,chúng ta bắt buộc phải chuẩn bị thi đại học.
Dialogue: 0,0:10:37.82,0:10:40.46,Default,,0,0,0,,Theo thường lệ nếu thua trong\Ntrận đấu giao hữu mùa hè,
Dialogue: 0,0:10:40.90,0:10:43.41,Default,,0,0,0,,thì đa số lớp 12 đều phải giải nghệ,\Nthay người mới vào.
Dialogue: 0,0:10:44.81,0:10:46.18,Default,,0,0,0,,Giải nghệ sao?
Dialogue: 0,0:10:46.73,0:10:49.29,Default,,0,0,0,,Ba năm nay tôi tập trung\Nmọi tinh thần vào bóng rổ,
Dialogue: 0,0:10:49.98,0:10:53.10,Default,,0,0,0,,cậu nói xem tâm trạng của con người\Nsao nói thay đổi là thay đổi được?
Dialogue: 0,0:10:54.55,0:10:56.11,Default,,0,0,0,,Tôi nghĩ trong ba năm nay, bất luận là ai,
Dialogue: 0,0:10:56.48,0:11:01.05,Default,,0,0,0,,chắc chắn đều có những điều muốn\Nđạt được nhưng lại không đạt được.
Dialogue: 0,0:11:01.26,0:11:03.09,Default,,0,0,0,,Ký ức đau khổ khi thua trận.
Dialogue: 0,0:11:05.32,0:11:06.44,Default,,0,0,0,,Tóm lại, dù thế nào đi nữa,
Dialogue: 0,0:11:06.88,0:11:08.96,Default,,0,0,0,,một tháng trước khi bắt đầu\Ngiải đấu toàn quốc này,
Dialogue: 0,0:11:09.56,0:11:10.96,Default,,0,0,0,,để không có sự hối tiếc nào,
Dialogue: 0,0:11:12.71,0:11:13.76,Default,,0,0,0,,chúng ta nhất định phải cố lên!
Dialogue: 0,0:11:14.81,0:11:16.30,Default,,0,0,0,,Bất luận khó khăn thế nào,
Dialogue: 0,0:11:16.98,0:11:19.66,Default,,0,0,0,,một tháng này cũng là\Nmột tháng cuối cùng của chúng ta,
Dialogue: 0,0:11:19.79,0:11:21.20,Default,,0,0,0,,cũng là khoảng thời gian quý báu nhất.
Dialogue: 0,0:11:21.32,0:11:26.62,Default,,0,0,0,,Cho nên chúng ta nhất định phải\Nthật trân trọng khoảng thời gian này.
Dialogue: 0,0:11:29.44,0:11:32.10,Default,,0,0,0,,Xin lỗi, tôi đến trễ rồi,\Nxin lỗi, xin lỗi!
Dialogue: 0,0:11:34.77,0:11:36.61,Default,,0,0,0,,Tên đó chắc chắn sẽ không giải nghệ đâu,
Dialogue: 0,0:11:36.61,0:11:38.16,Default,,0,0,0,,sẽ tiếp tục chơi đến mùa đông.
Dialogue: 0,0:11:38.26,0:11:40.00,Default,,0,0,0,,Được, tôi sẽ cố gắng!
Dialogue: 0,0:11:40.61,0:11:42.30,Default,,0,0,0,,Tôi nghĩ Mitsui vì muốn
Dialogue: 0,0:11:42.40,0:11:44.56,Default,,0,0,0,,níu lại khoảng thời gian\Nmà cậu ấy đã lãng phí,
Dialogue: 0,0:11:44.65,0:11:45.78,Default,,0,0,0,,cho nên mới nỗ lực như vậy.
Dialogue: 0,0:11:46.56,0:11:47.45,Default,,0,0,0,,Có lẽ là vậy.
Dialogue: 0,0:11:49.29,0:11:49.95,Default,,0,0,0,,Đi thôi.
Dialogue: 0,0:11:53.84,0:11:54.96,Default,,0,0,0,,Đợi đã!
Dialogue: 0,0:11:55.41,0:11:57.34,Default,,0,0,0,,Tôi sẽ đến ngay, Akagi!
Dialogue: 0,0:11:59.48,0:12:02.16,Default,,0,0,0,,Nakamura, nhanh lên, không còn thời gian nữa!
Dialogue: 0,0:12:02.35,0:12:04.54,Default,,0,0,0,,Chị Aida, đợi đã!
Dialogue: 0,0:12:06.82,0:12:08.90,Default,,0,0,0,,Được rồi, mọi người đều đến đủ rồi đúng không?
Dialogue: 0,0:12:09.00,0:12:09.73,Default,,0,0,0,,Xin lỗi!
Dialogue: 0,0:12:09.94,0:12:12.07,Default,,0,0,0,,Còn một người, còn một người chưa đến.
Dialogue: 0,0:12:12.91,0:12:14.38,Default,,0,0,0,,Sendoh vẫn chưa đến?
Dialogue: 0,0:12:17.68,0:12:18.69,Default,,0,0,0,,Được rồi.
Dialogue: 0,0:12:20.08,0:12:22.30,Default,,0,0,0,,Chuyện tôi muốn nói với mọi người\Nkhông phải chuyện gì khác.
Dialogue: 0,0:12:22.42,0:12:24.42,Default,,0,0,0,,Những thành viên thuộc khối 12,
Dialogue: 0,0:12:24.64,0:12:27.10,Default,,0,0,0,,chính xác hơn là tôi và Ikegami,
Dialogue: 0,0:12:27.36,0:12:31.76,Default,,0,0,0,,từ hôm nay sẽ rút khỏi đội bóng rổ Ryonan.
Dialogue: 0,0:12:58.08,0:12:59.91,Default,,0,0,0,,Sao? Giải nghệ sao?
Dialogue: 0,0:13:00.09,0:13:02.78,Default,,0,0,0,,Đàn anh Uozumi!\NKhông lẽ anh thật sự muốn giải nghệ sao?
Dialogue: 0,0:13:03.50,0:13:04.16,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:13:04.40,0:13:05.61,Default,,0,0,0,,Tôi và Ikegami,
Dialogue: 0,0:13:05.72,0:13:07.93,Default,,0,0,0,,mùa hè của khối 12 chúng tôi đã kết thúc rồi.
Dialogue: 0,0:13:08.69,0:13:11.53,Default,,0,0,0,,Giải đấu tỉnh của các trường cấp ba\Ntrong mùa hè này cũng đã kết thúc.
Dialogue: 0,0:13:12.55,0:13:15.01,Default,,0,0,0,,Chúng ta đã thua, đó là trận đấu\Ngiải nghệ của chúng tôi.
Dialogue: 0,0:13:15.73,0:13:17.22,Default,,0,0,0,,Nếu có thể vào được giải đấu toàn quốc,
Dialogue: 0,0:13:17.50,0:13:19.83,Default,,0,0,0,,thì thời gian giải nghệ sẽ được dời lại.
Dialogue: 0,0:13:20.63,0:13:21.69,Default,,0,0,0,,Tại sao lại như thế?
Dialogue: 0,0:13:21.95,0:13:23.78,Default,,0,0,0,,Sao lại giải nghệ nhanh như thế?
Dialogue: 0,0:13:25.60,0:13:28.15,Default,,0,0,0,,Trận đấu của chúng ta với Shohoku và Kainan
Dialogue: 0,0:13:28.46,0:13:30.67,Default,,0,0,0,,chỉ thiếu một chút điểm mà thôi.
Dialogue: 0,0:13:34.32,0:13:36.22,Default,,0,0,0,,Chúng ta đã chơi hết sức mình,
Dialogue: 0,0:13:36.93,0:13:41.02,Default,,0,0,0,,đã cố gắng hết sức chơi đến cuối cùng,\Nbất luận kết quả như thế nào,
Dialogue: 0,0:13:41.15,0:13:42.81,Default,,0,0,0,,tóm lại chúng ta đã dốc hết sức mình.
Dialogue: 0,0:13:43.20,0:13:44.69,Default,,0,0,0,,Tôi tuyệt đối sẽ không hối hận.
Dialogue: 0,0:13:58.75,0:13:59.61,Default,,0,0,0,,Nhưng mà...
Dialogue: 0,0:14:00.05,0:14:04.21,Default,,0,0,0,,Em nghĩ đàn anh Uozumi\Nsẽ tiếp tục chơi đến vòng loại
Dialogue: 0,0:14:04.24,0:14:05.18,Default,,0,0,0,,giống như những trường khác.
Dialogue: 0,0:14:07.05,0:14:12.08,Default,,0,0,0,,Những trường khác cũng có nhiều học sinh lớp 12\Ntiếp tục chơi đến mùa đông mới giải nghệ.
Dialogue: 0,0:14:13.17,0:14:16.16,Default,,0,0,0,,Không còn cách khác, là vấn đề của cá nhân tôi.
Dialogue: 0,0:14:19.19,0:14:22.18,Default,,0,0,0,,Tôi đã hứa với bố tôi.
Dialogue: 0,0:14:25.81,0:14:28.11,Default,,0,0,0,,Đợi đến khi 18 tuổi sẽ\Nbắt đầu tập trung học hành.
Dialogue: 0,0:14:28.48,0:14:32.68,Default,,0,0,0,,Đây là lời hứa từ nhỏ của tôi với bố tôi.
Dialogue: 0,0:14:33.91,0:14:35.87,Default,,0,0,0,,Trong gia đình tôi,\Nngười có thể kế thừa sản nghiệp
Dialogue: 0,0:14:36.69,0:14:38.08,Default,,0,0,0,,chỉ có một mình tôi.
Dialogue: 0,0:14:39.31,0:14:42.04,Default,,0,0,0,,Học... Học gì ạ?
Dialogue: 0,0:14:44.98,0:14:46.04,Default,,0,0,0,,Đó là ước mơ của tôi,
Dialogue: 0,0:14:47.62,0:14:48.91,Default,,0,0,0,,trở thành một đầu bếp.
Dialogue: 0,0:14:54.66,0:14:55.68,Default,,0,0,0,,Đầu bếp?
Dialogue: 0,0:14:55.89,0:14:58.02,Default,,0,0,0,,Thì ra bố của Uozumi là đầu bếp.
Dialogue: 0,0:14:59.63,0:15:03.16,Default,,0,0,0,,Em hiểu rồi, vì vậy nên mới có tên là Uozumi.
Dialogue: 0,0:14:59.63,0:15:03.16,Default,,0,0,0,,[Uozumi: Là sò điệp surimi]
Dialogue: 0,0:15:04.97,0:15:11.60,Default,,0,0,0,,Chúng tôi không thể thắng trận đấu này,\Nsau này sẽ phải nhờ các cậu đấy.
Dialogue: 0,0:15:23.09,0:15:24.07,Default,,0,0,0,,Lần sau,
Dialogue: 0,0:15:28.39,0:15:29.69,Default,,0,0,0,,các cậu nhất định phải
Dialogue: 0,0:15:32.39,0:15:34.43,Default,,0,0,0,,vào được giải đấu toàn quốc!
Dialogue: 0,0:16:07.90,0:16:08.92,Default,,0,0,0,,Uozumi.
Dialogue: 0,0:16:11.16,0:16:12.13,Default,,0,0,0,,Đến lượt cậu.
Dialogue: 0,0:16:19.07,0:16:22.87,Default,,0,0,0,,Tôi hy vọng lần sau các cậu chắc chắn\Nphải vào được giải đấu toàn quốc!
Dialogue: 0,0:16:26.24,0:16:27.71,Default,,0,0,0,,[Nói thật dứt khoát!]
Dialogue: 0,0:16:30.27,0:16:32.21,Default,,0,0,0,,Vâng, em biết rồi!
Dialogue: 0,0:16:33.11,0:16:35.40,Default,,0,0,0,,Luyện tập nào!
Dialogue: 0,0:16:35.40,0:16:36.47,Default,,0,0,0,,Chị!
Dialogue: 0,0:16:38.73,0:16:40.66,Default,,0,0,0,,Sao chị lại ở đây?
Dialogue: 0,0:16:42.37,0:16:43.86,Default,,0,0,0,,Chị à, uổng công chị đến đây rồi,
Dialogue: 0,0:16:44.11,0:16:45.68,Default,,0,0,0,,Sendoh còn chưa đến.
Dialogue: 0,0:16:45.95,0:16:48.05,Default,,0,0,0,,Chị, chị cũng thật là,
Dialogue: 0,0:16:48.19,0:16:49.82,Default,,0,0,0,,từ sáng đến tối đều treo\Ntên Sendoh bên cửa miệng.
Dialogue: 0,0:16:49.99,0:16:50.98,Default,,0,0,0,,Hikoichi!
Dialogue: 0,0:16:51.11,0:16:53.84,Default,,0,0,0,,Em biết rồi,\Nthì ra chị Aida có ý riêng với Sendoh.
Dialogue: 0,0:16:53.98,0:16:56.70,Default,,0,0,0,,Cậu nói gì vậy, Nakamura?\NĐây là công việc, là công việc!
Dialogue: 0,0:16:56.87,0:16:59.86,Default,,0,0,0,,Sendoh là cầu thủ có thực lực\Nđứng nhất nhì của toàn quốc đấy,
Dialogue: 0,0:17:00.04,0:17:01.03,Default,,0,0,0,,chúng ta đến đây
Dialogue: 0,0:17:01.03,0:17:03.19,Default,,0,0,0,,để hỏi cậu ta nhiều vấn đề mà, không phải sao?
Dialogue: 0,0:17:03.80,0:17:04.76,Default,,0,0,0,,Sendoh cậu ấy...
Dialogue: 0,0:17:06.48,0:17:07.91,Default,,0,0,0,,Cậu ấy không phải là người cô hỏi gì
Dialogue: 0,0:17:07.93,0:17:09.11,Default,,0,0,0,,thì cậu ấy sẽ ngoan ngoãn trời đâu.
Dialogue: 0,0:17:09.84,0:17:12.43,Default,,0,0,0,,Không ai hiểu rõ cậu ấy nghĩ gì trong lòng.
Dialogue: 0,0:17:12.92,0:17:15.48,Default,,0,0,0,,Hơn nữa tôi nghĩ sự lợi hại nhất của Sendoh,
Dialogue: 0,0:17:15.48,0:17:17.81,Default,,0,0,0,,là phải chơi bóng trực tiếp với cậu ấy
Dialogue: 0,0:17:17.81,0:17:19.85,Default,,0,0,0,,thì mới thật sự hiểu được.
Dialogue: 0,0:17:20.96,0:17:22.61,Default,,0,0,0,,Hơn nữa bây giờ cậu ấy\Nvẫn chưa hoàn toàn trưởng thành,
Dialogue: 0,0:17:23.06,0:17:26.60,Default,,0,0,0,,tương lai đội bóng của Ryonan\Ncó sự thay đổi gì,
Dialogue: 0,0:17:26.76,0:17:28.23,Default,,0,0,0,,chúng tôi cũng khó mà đoán trước được.
Dialogue: 0,0:17:28.70,0:17:30.40,Default,,0,0,0,,Nhưng quan trọng là\Nđội trưởng mới của chúng ta
Dialogue: 0,0:17:30.40,0:17:32.99,Default,,0,0,0,,đến bây giờ vẫn chưa đến luyện tập.
Dialogue: 0,0:17:33.30,0:17:34.93,Default,,0,0,0,,Thật sự không vấn đề gì sao?
Dialogue: 0,0:17:35.27,0:17:36.52,Default,,0,0,0,,Nói thật thì tôi cũng có chút lo lắng,
Dialogue: 0,0:17:36.52,0:17:37.64,Default,,0,0,0,,nhưng chính vì có cậu ấy,
Dialogue: 0,0:17:37.64,0:17:39.35,Default,,0,0,0,,chúng tôi mới có thể yên tâm giải nghệ.
Dialogue: 0,0:17:40.14,0:17:41.73,Default,,0,0,0,,Cho nên các cậu không phải lo lắng gì cả.
Dialogue: 0,0:17:42.83,0:17:44.30,Default,,0,0,0,,Nếu có người có thể đấu với cậu ấy
Dialogue: 0,0:17:44.43,0:17:45.74,Default,,0,0,0,,người đó chính là...
Dialogue: 0,0:17:45.84,0:17:47.45,Default,,0,0,0,,Rukawa của Shohoku!
Dialogue: 0,0:17:51.04,0:17:52.33,Default,,0,0,0,,Rukawa, chuyền bóng!
Dialogue: 0,0:17:57.63,0:17:58.96,Default,,0,0,0,,Biết sự lợi hại rồi chứ, Rukawa?
Dialogue: 0,0:18:01.03,0:18:01.72,Default,,0,0,0,,[Rukawa!]
Dialogue: 0,0:18:04.26,0:18:05.73,Default,,0,0,0,,Mặc dù cậu ta chỉ là một học sinh lớp 10,
Dialogue: 0,0:18:06.43,0:18:08.63,Default,,0,0,0,,nhưng em thật sự rất mong đợi
Dialogue: 0,0:18:08.77,0:18:09.93,Default,,0,0,0,,vào biểu hiện\Ncủa cậu ta trong giải đấu toàn quốc.
Dialogue: 0,0:18:11.66,0:18:12.89,Default,,0,0,0,,Ăn nói cho cẩn thận vào!
Dialogue: 0,0:18:13.30,0:18:15.07,Default,,0,0,0,,[Hai chị em này giống thế!]
Dialogue: 0,0:18:15.60,0:18:16.96,Default,,0,0,0,,Shohoku.
Dialogue: 0,0:18:17.78,0:18:19.77,Default,,0,0,0,,Akagi,\Nnếu cậu bị thua trong giải đấu toàn quốc,
Dialogue: 0,0:18:19.98,0:18:21.83,Default,,0,0,0,,trở về đây, tôi tuyệt đối không tha cho cậu!
Dialogue: 0,0:18:24.46,0:18:25.15,Default,,0,0,0,,Chị à.
Dialogue: 0,0:18:25.29,0:18:26.95,Default,,0,0,0,,Chị phải làm việc thật chăm chỉ,\Nđừng lười biếng đấy!
Dialogue: 0,0:18:26.95,0:18:30.51,Default,,0,0,0,,Hikoichi, em mới là người nên học hỏi Sendoh,\Nhọc hỏi thật chăm chỉ vào!
Dialogue: 0,0:18:30.90,0:18:32.16,Default,,0,0,0,,Vâng, em biết rồi.
Dialogue: 0,0:18:32.23,0:18:33.37,Default,,0,0,0,,Phải rồi, Uozumi.
Dialogue: 0,0:18:34.34,0:18:36.47,Default,,0,0,0,,Cậu phải cố gắng học để trở thành đầu bếp nhé.
Dialogue: 0,0:18:36.68,0:18:38.67,Default,,0,0,0,,Cảm ơn, tôi biết rồi.
Dialogue: 0,0:18:38.91,0:18:40.38,Default,,0,0,0,,Sao mặt cậu đỏ như cà chua vậy?
Dialogue: 0,0:18:43.19,0:18:44.66,Default,,0,0,0,,Hôm nay thật là đáng tiếc.
Dialogue: 0,0:18:49.73,0:18:51.22,Default,,0,0,0,,Chị không phỏng vấn anh ta sao?
Dialogue: 0,0:18:52.77,0:18:55.13,Default,,0,0,0,,Tôi nghĩ tôi không làm cũng không sao.
Dialogue: 0,0:18:55.86,0:18:56.89,Default,,0,0,0,,Tôi tin không lâu nữa,
Dialogue: 0,0:18:57.13,0:19:00.00,Default,,0,0,0,,Sendoh nhất định sẽ trở thành\Nnhân vật được cả nước ngước nhìn!
Dialogue: 0,0:19:04.12,0:19:08.83,Default,,0,0,0,,Không được! Nhắc đến Shohoku, em quên mất\Ncòn một người quan trọng nữa!
Dialogue: 0,0:19:10.37,0:19:12.36,Default,,0,0,0,,Xem ra, mọi người càng phấn chấn hơn rồi đấy.
Dialogue: 0,0:19:13.67,0:19:16.47,Default,,0,0,0,,Chỉ bắt mỗi em ở lại tập những bài này.
Dialogue: 0,0:19:16.60,0:19:18.74,Default,,0,0,0,,Người mới không có tư cách vội vã!
Dialogue: 0,0:19:19.91,0:19:21.18,Default,,0,0,0,,Sakuragi, là cậu sao?
Dialogue: 0,0:19:21.29,0:19:22.39,Default,,0,0,0,,Cậu phải cố gắng nhé!
Dialogue: 0,0:19:22.48,0:19:23.77,Default,,0,0,0,,Haruko!
Dialogue: 0,0:19:23.92,0:19:25.02,Default,,0,0,0,,Mình đang cố gắng đây!
Dialogue: 0,0:19:25.12,0:19:26.62,Default,,0,0,0,,Thiên tài Sakuragi lúc nào cũng cố gắng!
Dialogue: 0,0:19:26.74,0:19:27.47,Default,,0,0,0,,Tuyệt đối không thua người khác!
Dialogue: 0,0:19:29.32,0:19:32.08,Default,,0,0,0,,Sao hôm nay không thấy Rukawa vậy?
Dialogue: 0,0:19:32.46,0:19:35.46,Default,,0,0,0,,Thường ngày cậu ấy đều ở lại luyện tập mà.
Dialogue: 0,0:19:35.60,0:19:38.09,Default,,0,0,0,,Hình như hôm nay tâm trạng\Ncủa cậu ấy không ổn lắm.
Dialogue: 0,0:19:40.31,0:19:41.90,Default,,0,0,0,,Đàn anh Kogure.
Dialogue: 0,0:19:42.21,0:19:43.67,Default,,0,0,0,,Trông bộ dạng của Rukawa,
Dialogue: 0,0:19:43.84,0:19:45.45,Default,,0,0,0,,hình như trong lòng đang nghĩ đến việc khác.
Dialogue: 0,0:19:46.20,0:19:48.62,Default,,0,0,0,,Nhưng cậu ấy cũng không thể về sớm để học bài.
Dialogue: 0,0:19:48.79,0:19:49.78,Default,,0,0,0,,Có lẽ là do quá áp lực.
Dialogue: 0,0:19:50.55,0:19:52.77,Default,,0,0,0,,Thành tích của cậu ấy ở\Ngiải đấu tỉnh đúng là rất kinh ngạc,
Dialogue: 0,0:19:52.91,0:19:55.49,Default,,0,0,0,,nhưng nếu đổi lại là sân toàn quốc\Nthì khó nói lắm.
Dialogue: 0,0:19:55.62,0:19:57.17,Default,,0,0,0,,Cậu ấy là học sinh lớp 10,
Dialogue: 0,0:19:57.33,0:19:59.41,Default,,0,0,0,,sẽ bình tĩnh phát huy thực lực\Nở giải lớn như vậy chứ?
Dialogue: 0,0:19:59.59,0:20:01.99,Default,,0,0,0,,Mình nghĩ sẽ không đâu,\Ncậu ấy sẽ không có vấn đề gì.
Dialogue: 0,0:20:02.19,0:20:05.20,Default,,0,0,0,,Đúng đấy, cậu ấy không mỏng manh đến thế,
Dialogue: 0,0:20:05.20,0:20:06.91,Default,,0,0,0,,sẽ không vì có áp lực mà chịu không nổi đâu.
Dialogue: 0,0:20:07.06,0:20:09.23,Default,,0,0,0,,Nói đơn giản hơn,\Ncậu ấy chính là con trùng biến hình.
Dialogue: 0,0:20:09.38,0:20:10.21,Default,,0,0,0,,Chị Ayako.
Dialogue: 0,0:20:10.38,0:20:11.89,Default,,0,0,0,,Đúng vậy, nó chính là con trùng...
Dialogue: 0,0:20:11.89,0:20:13.46,Default,,0,0,0,,Ngoan ngoãn tập luyện cho tôi!
Dialogue: 0,0:20:15.97,0:20:18.68,Default,,0,0,0,,Mình thật sự càng lúc càng không hiểu\Ncon người của Rukawa.
Dialogue: 0,0:20:24.07,0:20:27.07,Default,,0,0,0,,[Mục tiêu xưng bá toàn quốc\Nkhiến cho Shohoku càng hưng phấn hơn.]
Dialogue: 0,0:20:27.20,0:20:32.40,Default,,0,0,0,,[Còn về phía Ryonan, Sendoh\Nngười kế thừa Uozumi và những người khác]
Dialogue: 0,0:20:32.50,0:20:34.14,Default,,0,0,0,,[tiếp tục hoàn thành ước mơ của họ,\Ndẫn dắt các thành viên khác,]
Dialogue: 0,0:20:34.25,0:20:36.86,Default,,0,0,0,,[thực hiện bước ngoặt\Nước mơ hướng ra toàn quốc.]
Dialogue: 0,0:20:38.01,0:20:44.06,Default,,0,0,0,,[Nhưng không ai đoán trước được\Ncon đường phía trước của Rukawa.]
Dialogue: 0,0:20:48.54,0:20:55.86,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:20:56.34,0:21:03.40,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:21:13.83,0:21:20.49,Default,,0,0,0,,♫ Từng một lòng muốn thực hiện\Nnhững ước mơ xưa cũ ♫
Dialogue: 0,0:21:21.15,0:21:25.71,Default,,0,0,0,,♫ Cho đến hôm nay vẫn chói mắt như thế ♫
Dialogue: 0,0:21:28.39,0:21:35.94,Default,,0,0,0,,♫ Cho dù tâm tình đầy sự bất an ♫
Dialogue: 0,0:21:36.06,0:21:40.05,Default,,0,0,0,,♫ Tôi vẫn vững tin\Nvới lựa chọn của chính mình ♫
Dialogue: 0,0:21:42.28,0:21:49.02,Default,,0,0,0,,♫ Thích vẻ mặt thuần khiết\Nkhông điểm trang gì của cậu ♫
Dialogue: 0,0:21:49.16,0:21:55.06,Default,,0,0,0,,♫ Nếu một ngày nó thay đổi,\Nsẽ làm người ta thấy đau lòng lắm ♫
Dialogue: 0,0:21:56.01,0:22:01.63,Default,,0,0,0,,♫ Thời niên thiếu đã từng luôn lấp lánh ♫
Dialogue: 0,0:22:01.72,0:22:04.16,Default,,0,0,0,,♫ Đôi mắt của cậu, hỡi bạn tôi ♫
Dialogue: 0,0:22:04.26,0:22:10.66,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:22:10.86,0:22:18.03,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:22:21.32,0:22:22.39,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:24.84,0:22:26.63,Default,,0,0,0,,Sakuragi, cảm thấy thế nào?
Dialogue: 0,0:22:26.78,0:22:28.92,Default,,0,0,0,,Dồi dào sức sống!
Dialogue: 0,0:22:29.03,0:22:31.70,Default,,0,0,0,,Vì là cầu thủ giải đấu toàn quốc\Nđược mọi người chú ý sao?
Dialogue: 0,0:22:31.81,0:22:34.27,Default,,0,0,0,,Ví dụ như là "Ngôi sao được yêu thích nhất"?
Dialogue: 0,0:22:34.40,0:22:36.97,Default,,0,0,0,,Đấy là gì? Biệt danh sao?
Dialogue: 0,0:22:37.08,0:22:39.49,Default,,0,0,0,,Học sinh lớp 12 của\NHọc viện Aiwa - Moroboshi Dai.
Dialogue: 0,0:22:39.65,0:22:42.92,Default,,0,0,0,,Nếu các cậu muốn xưng bá toàn quốc,
Dialogue: 0,0:22:43.05,0:22:44.73,Default,,0,0,0,,thì anh ta là ngọn núi không thể tránh khỏi.
Dialogue: 0,0:22:44.86,0:22:46.04,Default,,0,0,0,,"Cao thủ bóng rổ."
Dialogue: 0,0:22:46.16,0:22:48.02,Default,,0,0,0,,"Học sinh cấp ba số một của Nhật Bản!"
Dialogue: 0,0:22:48.17,0:22:49.50,Default,,0,0,0,,Chắc chắn phải xem đó.
