Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.82,0:00:20.66,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.71,0:00:23.96,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.63,0:00:30.15,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.38,0:00:36.42,Default,,0,0,0,,♫ Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.34,0:00:44.18,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:44.98,0:00:50.98,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.17,0:00:56.98,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.07,0:01:03.05,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.14,0:01:09.88,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.82,0:01:19.77,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:19.89,0:01:25.92,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.06,0:01:31.83,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:31.93,0:01:40.33,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:55.77,0:01:59.52,Default,,0,0,0,,[Trong trận đấu một đấu một\Ngiữa Mitsui với Rukawa,]
Dialogue: 0,0:01:59.71,0:02:01.77,Default,,0,0,0,,[Rukawa thể hiện\Ný chí chiến đấu mạnh mẽ bất ngờ.]
Dialogue: 0,0:02:01.88,0:02:04.58,Default,,0,0,0,,[Cậu ấy không chỉ không thua Mitsui,\Nmà còn nhỉnh hơn một chút.]
Dialogue: 0,0:02:05.57,0:02:08.11,Default,,0,0,0,,[Một góc nào đó trong cơ thể của tên này\Ncó thứ gì đó đang bắt đầu nảy mầm.]
Dialogue: 0,0:02:08.23,0:02:09.46,Default,,0,0,0,,[Tính đến lúc này cũng chưa có.]
Dialogue: 0,0:02:10.13,0:02:11.70,Default,,0,0,0,,[Là những thứ mà chúng ta thiếu sót.]
Dialogue: 0,0:02:12.45,0:02:16.24,Default,,0,0,0,,Hãy trở thành học sinh số một của Nhật Bản,\NRukawa.
Dialogue: 0,0:02:16.75,0:02:18.72,Default,,0,0,0,,[Mình sẽ không thua người khác.]
Dialogue: 0,0:02:27.25,0:02:30.44,Default,,0,0,0,,[Ở một diễn biến khác, đội bóng rổ trường đại học thể thao\NFukasawa đứng đầu giới bóng rổ đại học]
Dialogue: 0,0:02:30.54,0:02:34.00,Default,,0,0,0,,[đã đưa ra yêu cầu với Akagi, điều kiện để\Nvào đội là bước vào top tám Nhật Bản.]
Dialogue: 0,0:02:35.13,0:02:37.83,Default,,0,0,0,,Tôi không thể lấy mục tiêu là top tám,
Dialogue: 0,0:02:40.57,0:02:43.01,Default,,0,0,0,,xưng bá toàn quốc mới là mơ ước của tôi.
Dialogue: 0,0:02:44.58,0:02:49.44,Default,,0,0,0,,[Hanamichi bất ngờ yêu cầu\Nquyết đấu với kình địch Rukawa.]
Dialogue: 0,0:02:52.78,0:02:55.54,Default,,0,0,0,,Người cậu nên đánh bại bây giờ
Dialogue: 0,0:02:55.56,0:02:57.69,Default,,0,0,0,,là tất cả đội mạnh của giải đấu toàn quốc.
Dialogue: 0,0:03:03.23,0:03:04.25,Default,,0,0,0,,[Nhưng...]
Dialogue: 0,0:03:04.50,0:03:06.88,Default,,0,0,0,,[trước khi đạt được ước vọng\Nxưng bá toàn quốc ở Shohoku]
Dialogue: 0,0:03:06.99,0:03:09.51,Default,,0,0,0,,[thì vẫn còn thử thách bất ngờ\Nđang chờ đợi bọn họ.]
Dialogue: 0,0:03:16.98,0:03:24.26,Default,,0,0,0,,[Nguy cơ của giải đấu toàn quốc]
Dialogue: 0,0:03:19.26,0:03:21.18,Default,,0,0,0,,[Nguy cơ của giải đấu toàn quốc.]
Dialogue: 0,0:03:44.43,0:03:45.61,Default,,0,0,0,,Đây chính là thực lực à?
Dialogue: 0,0:03:53.44,0:03:59.38,Default,,0,0,0,,Chờ đã...
Dialogue: 0,0:04:07.30,0:04:10.42,Default,,0,0,0,,Hanamichi, mày lại ngủ nói mớ nữa rồi hả?
Dialogue: 0,0:04:10.70,0:04:11.60,Default,,0,0,0,,Mơ...
Dialogue: 0,0:04:13.04,0:04:17.60,Default,,0,0,0,,[Phải, đó là mơ, là ác mộng...]
Dialogue: 0,0:04:17.94,0:04:21.28,Default,,0,0,0,,[Không thì thiên tài mình đây\Nsao có thể thua Rukawa chứ?]
Dialogue: 0,0:04:22.22,0:04:24.65,Default,,0,0,0,,Phải rồi, hình như\Ngiải đấu toàn quốc sắp bắt đầu nhỉ?
Dialogue: 0,0:04:24.85,0:04:26.46,Default,,0,0,0,,Sakuragi, phải cố gắng đấy.
Dialogue: 0,0:04:26.61,0:04:28.57,Default,,0,0,0,,Cả lớp cũng sẽ cổ vũ.
Dialogue: 0,0:04:28.70,0:04:31.86,Default,,0,0,0,,Sakuragi, cố lên nhé, hạng nhất toàn quốc.
Dialogue: 0,0:04:31.99,0:04:34.99,Default,,0,0,0,,Được, mọi người mong chờ thỏa thích.
Dialogue: 0,0:04:34.99,0:04:36.27,Default,,0,0,0,,Thiên tài Sakuragi sẽ thể hiện sức mạnh\Ntrong giới bóng rổ toàn quốc.
Dialogue: 0,0:04:38.62,0:04:40.25,Default,,0,0,0,,Sakuragi, em nghe rõ cho thầy,
Dialogue: 0,0:04:41.13,0:04:45.89,Default,,0,0,0,,đửng quên giải đấu toàn quốc vẫn chưa bắt đầu,\Nnhưng kết quả cuối kỳ thì có trước đấy.
Dialogue: 0,0:04:46.96,0:04:49.40,Default,,0,0,0,,Em không biết\Nquy định của nhà trường đâu nhỉ?
Dialogue: 0,0:04:50.81,0:04:54.33,Default,,0,0,0,,Người trượt bốn môn trở lên sẽ\Nkhông có tư cách tham gia giải đấu toàn quốc.
Dialogue: 0,0:04:56.29,0:04:57.62,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:04:59.11,0:05:02.02,Default,,0,0,0,,Lần này xem như\Ntạm chấp nhận được, chỉ trượt ba môn thôi.
Dialogue: 0,0:05:02.03,0:05:03.61,Default,,0,0,0,,Mày thua rồi, tao chỉ có hai môn.
Dialogue: 0,0:05:03.71,0:05:07.29,Default,,0,0,0,,-  Tao cũng thế.\N- Cơ mà chúng ta không so được với Hanamichi đâu.
Dialogue: 0,0:05:07.40,0:05:08.34,Default,,0,0,0,,Thua nó rồi.
Dialogue: 0,0:05:10.52,0:05:11.98,Default,,0,0,0,,Nó trượt bảy môn liền.
Dialogue: 0,0:05:15.23,0:05:16.75,Default,,0,0,0,,Hanamichi, mày tính thế nào?
Dialogue: 0,0:05:30.88,0:05:36.82,Default,,0,0,0,,Một trang, hai trang,\Nba trang, bốn trang, năm trang...
Dialogue: 0,0:05:37.47,0:05:40.24,Default,,0,0,0,,[Đùa gì thế hả?]
Dialogue: 0,0:05:40.41,0:05:43.57,Default,,0,0,0,,[Giải đấu ra mắt toàn quốc\Ncủa thiên tài bóng rổ Sakuragi...]
Dialogue: 0,0:05:50.88,0:05:52.32,Default,,0,0,0,,Sẽ có chuyện gì không nhỉ?
Dialogue: 0,0:05:52.62,0:05:54.95,Default,,0,0,0,,Thế mà lại chọn ngay lúc quan trọng này...
Dialogue: 0,0:05:55.42,0:05:56.69,Default,,0,0,0,,Akagi, xin cậu đấy.
Dialogue: 0,0:05:57.84,0:05:59.77,Default,,0,0,0,,[Bây giờ chúng ta chỉ có thể\Ntrông cậy vào cậu thôi.]
Dialogue: 0,0:06:03.68,0:06:05.31,Default,,0,0,0,,Xin thầy hãy từ bi
Dialogue: 0,0:06:05.70,0:06:08.39,Default,,0,0,0,,mà cho những tên ngốc này một cơ hội thi lại.
Dialogue: 0,0:06:08.65,0:06:09.71,Default,,0,0,0,,Xin thầy đấy.
Dialogue: 0,0:06:12.44,0:06:13.80,Default,,0,0,0,,Thì ra mình còn có đồng bọn.
Dialogue: 0,0:06:15.35,0:06:16.66,Default,,0,0,0,,Xin thầy.
Dialogue: 0,0:06:16.85,0:06:17.84,Default,,0,0,0,,Có chuyện gì thế này?
Dialogue: 0,0:06:18.05,0:06:19.47,Default,,0,0,0,,Thành tích của Akagi đội bóng rổ,
Dialogue: 0,0:06:19.47,0:06:21.77,Default,,0,0,0,,với nhiều đội viên đều rất xuất sắc.
Dialogue: 0,0:06:22.38,0:06:24.17,Default,,0,0,0,,Nhưng luôn có một vài ngoại lệ.
Dialogue: 0,0:06:24.98,0:06:28.71,Default,,0,0,0,,Tinh Tinh Bự,\Nkhông cần phải ăn nói khép nép như thế.
Dialogue: 0,0:06:30.22,0:06:31.94,Default,,0,0,0,,Cái tên khôn khiếp này.
Dialogue: 0,0:06:32.15,0:06:34.58,Default,,0,0,0,,Cậu nghĩ tôi ăn nói khép nép vì ai hả?
Dialogue: 0,0:06:34.58,0:06:36.87,Default,,0,0,0,,Cái tên khốn này!
Dialogue: 0,0:06:36.89,0:06:39.70,Default,,0,0,0,,[Phòng nhân viên]
Dialogue: 0,0:06:40.30,0:06:43.76,Default,,0,0,0,,Không có sự tham gia của bốn người đó thì\Nchúng ta hết hy vọng với giải toàn quốc rồi.
Dialogue: 0,0:06:44.77,0:06:47.02,Default,,0,0,0,,Trong giải đấu khu vực lần này,\Ngiành được hạng hai
Dialogue: 0,0:06:47.11,0:06:48.87,Default,,0,0,0,,đã khiến người ta không dám tin rồi.
Dialogue: 0,0:06:50.98,0:06:52.20,Default,,0,0,0,,Thật là...
Dialogue: 0,0:06:52.31,0:06:55.11,Default,,0,0,0,,Thật là bó tay với đám trẻ con rắc rối này.
Dialogue: 0,0:06:55.75,0:06:57.02,Default,,0,0,0,,Thầy ơi, xin thầy.
Dialogue: 0,0:06:58.42,0:06:59.33,Default,,0,0,0,,Xin đấy ạ.
Dialogue: 0,0:06:59.41,0:07:00.09,Default,,0,0,0,,Xin đấy ạ.
Dialogue: 0,0:07:01.77,0:07:05.21,Default,,0,0,0,,Bốn cầu thủ chủ lực đều thi lại,\Nthế thì có thể xưng bá toàn quốc à?
Dialogue: 0,0:07:06.19,0:07:08.45,Default,,0,0,0,,Câu lạc bộ Judo mấy người cũng có khá hơn đâu,
Dialogue: 0,0:07:09.76,0:07:10.62,Default,,0,0,0,,Aota.
Dialogue: 0,0:07:11.44,0:07:12.69,Default,,0,0,0,,Chỉ có mình tao thôi.
Dialogue: 0,0:07:14.77,0:07:15.59,Default,,0,0,0,,Xin thầy ạ,
Dialogue: 0,0:07:15.69,0:07:17.55,Default,,0,0,0,,xin thầy hãy cho em thêm cơ hội sống lại.
Dialogue: 0,0:07:18.66,0:07:21.82,Default,,0,0,0,,Thì ra anh cũng thảm như bọn tôi.
Dialogue: 0,0:07:24.23,0:07:27.43,Default,,0,0,0,,Đứa này ngu hơn đứa kia nữa.
Dialogue: 0,0:07:28.63,0:07:29.60,Default,,0,0,0,,Nghe rõ đây,
Dialogue: 0,0:07:30.04,0:07:33.48,Default,,0,0,0,,sau khi nghỉ hè\Nthì trước hết phải tập huấn một tuần.
Dialogue: 0,0:07:33.79,0:07:36.50,Default,,0,0,0,,Nhưng trước lúc đó
Dialogue: 0,0:07:37.15,0:07:41.31,Default,,0,0,0,,mấy người các cậu phải đến nhà tôi ôn tập,\Nnghe rõ chưa đám ngu kia?
Dialogue: 0,0:07:43.81,0:07:46.51,Default,,0,0,0,,Huấn luyện học tập, lần này thú vị đây.
Dialogue: 0,0:07:46.53,0:07:48.84,Default,,0,0,0,,Trông có vẻ khó hơn huấn luyện bóng rổ đó.
Dialogue: 0,0:07:50.19,0:07:51.66,Default,,0,0,0,,Bọn mày có tư cách cười người ta à?
Dialogue: 0,0:07:51.82,0:07:53.11,Default,,0,0,0,,Cái đám trượt môn bọn mày.
Dialogue: 0,0:07:53.18,0:07:55.62,Default,,0,0,0,,Bớt nhảm đi,\Ntao không có trượt bảy môn như mày.
Dialogue: 0,0:07:55.62,0:07:58.49,Default,,0,0,0,,Mày mới là trượt môn thật sự.
Dialogue: 0,0:07:58.58,0:08:01.22,Default,,0,0,0,,Vua thi lại Sakuragi Hanamichi.
Dialogue: 0,0:08:02.65,0:08:04.26,Default,,0,0,0,,Đáng ghét.
Dialogue: 0,0:08:04.87,0:08:07.68,Default,,0,0,0,,May mà còn có cơ hội vãn hồi.
Dialogue: 0,0:08:08.47,0:08:09.72,Default,,0,0,0,,Sau này phải mệt rồi đây.
Dialogue: 0,0:08:13.53,0:08:14.19,Default,,0,0,0,,Chuyền tốt lắm.
Dialogue: 0,0:08:16.66,0:08:19.00,Default,,0,0,0,,Nào, tôi sẽ ném vào rổ.
Dialogue: 0,0:08:19.13,0:08:20.29,Default,,0,0,0,,Tới đi Ryota.
Dialogue: 0,0:08:31.21,0:08:33.25,Default,,0,0,0,,Kuwata, phòng thủ của cậu yếu quá.
Dialogue: 0,0:08:33.29,0:08:34.51,Default,,0,0,0,,Phải trông coi vị trí của mình cho kĩ.
Dialogue: 0,0:08:36.18,0:08:39.48,Default,,0,0,0,,Đàn anh Akagi, như vậy có ổn không?\NNgày mai phải thi lại rồi.
Dialogue: 0,0:08:39.88,0:08:42.18,Default,,0,0,0,,Không phải bây giờ\Nnên để bốn người họ ôn tập sao?
Dialogue: 0,0:08:43.55,0:08:47.55,Default,,0,0,0,,Không, ôn tập vẫn phải ôn tập,\Nkhông được đối xử bọn họ khác biệt.
Dialogue: 0,0:08:47.73,0:08:50.46,Default,,0,0,0,,Nhưng chỉ ôn dồn một tối thì không sao chứ?
Dialogue: 0,0:08:51.76,0:08:55.14,Default,,0,0,0,,Lỡ như trong đó\Ncó một đứa không qua ải thì thảm.
Dialogue: 0,0:08:55.25,0:08:57.52,Default,,0,0,0,,Nhất định phải nghĩ cách\Nvượt qua ải này mới được.
Dialogue: 0,0:08:58.09,0:09:02.15,Default,,0,0,0,,Chuyện này có dựa vào sức mạnh\Ncủa một mình tôi cũng vô dụng.
Dialogue: 0,0:09:03.51,0:09:05.67,Default,,0,0,0,,Tôi mong hai người\Ncũng có thể giúp tôi một tay.
Dialogue: 0,0:09:15.79,0:09:17.40,Default,,0,0,0,,Hanamichi, ném rổ đàng hoàng cho tôi.
Dialogue: 0,0:09:22.78,0:09:25.49,Default,,0,0,0,,Đến nhà tôi ôn tập.
Dialogue: 0,0:09:25.75,0:09:30.28,Default,,0,0,0,,[Đáng ghét, cái tên Tinh Tinh Bự này,\Nôn tập gì chứ?]
Dialogue: 0,0:09:30.64,0:09:32.66,Default,,0,0,0,,[Ngu chết được.]
Dialogue: 0,0:09:32.78,0:09:34.72,Default,,0,0,0,,[Đến nhà Tinh Tinh Bự ôn tập quả là...]
Dialogue: 0,0:09:35.25,0:09:37.30,Default,,0,0,0,,[Đến nhà Tinh Tinh Bự...]
Dialogue: 0,0:09:37.40,0:09:40.16,Default,,0,0,0,,[Đến nhà Tinh Tinh Bự... không phải là...]
Dialogue: 0,0:09:40.91,0:09:44.65,Default,,0,0,0,,[không phải là mình có thể\Nở dưới một mái nhà với Haruko sao?]
Dialogue: 0,0:09:45.64,0:09:49.21,Default,,0,0,0,,Loài có vú nào đã được phát hiện\Ngần giống với loài người?
Dialogue: 0,0:09:49.36,0:09:49.98,Default,,0,0,0,,Tinh Tinh Bự.
Dialogue: 0,0:09:50.19,0:09:52.81,Default,,0,0,0,,Thế thì tổ tiên xa xưa nhất\Ncủa loài người là gì?
Dialogue: 0,0:09:52.81,0:09:53.54,Default,,0,0,0,,Thủ Lĩnh Người Vượn.
Dialogue: 0,0:09:54.11,0:09:56.18,Default,,0,0,0,,Ai đã xây dựng Vạn Lý Trường Thành?
Dialogue: 0,0:09:56.31,0:09:57.63,Default,,0,0,0,,Người Trung Quốc.
Dialogue: 0,0:09:57.63,0:10:01.63,Default,,0,0,0,,Giỏi quá,\NSakuragi quả nhiên là một thiên tài.
Dialogue: 0,0:10:02.13,0:10:02.96,Default,,0,0,0,,Thế à...?
Dialogue: 0,0:10:05.38,0:10:07.78,Default,,0,0,0,,Nếu có thể trở thành sự thật thì tốt quá.
Dialogue: 0,0:10:07.91,0:10:10.91,Default,,0,0,0,,Chuyện đã đến nước này,\Nmặc kệ là ôn tập hay làm gì
Dialogue: 0,0:10:10.91,0:10:12.39,Default,,0,0,0,,thì mình đều phải làm đến cùng.
Dialogue: 0,0:10:12.93,0:10:16.33,Default,,0,0,0,,Thiên tài Sakuragi cầu còn không được
Dialogue: 0,0:10:16.99,0:10:19.46,Default,,0,0,0,,ở dưới cùng một mái nhà với Haruko.
Dialogue: 0,0:10:19.85,0:10:21.25,Default,,0,0,0,,Hanamichi, bóng bay qua kìa.
Dialogue: 0,0:10:25.49,0:10:28.76,Default,,0,0,0,,Ở dưới cùng một mái nhà với Haruko.
Dialogue: 0,0:10:30.04,0:10:30.80,Default,,0,0,0,,Cái tên ngu này.
Dialogue: 0,0:10:54.60,0:10:56.80,Default,,0,0,0,,- Viết xong rồi.\N- Đưa xem nào.
Dialogue: 0,0:10:59.85,0:11:02.65,Default,,0,0,0,,Ryota, chỉ cần có lòng\Nthì thật ra cậu vẫn làm được mà.
Dialogue: 0,0:11:02.89,0:11:05.35,Default,,0,0,0,,Tại sao lúc thi lại tệ thế?
Dialogue: 0,0:11:07.59,0:11:08.85,Default,,0,0,0,,Nếu giáo viên của tôi là Ayako
Dialogue: 0,0:11:08.91,0:11:10.70,Default,,0,0,0,,không chừng còn thi được trăm điểm đấy.
Dialogue: 0,0:11:11.70,0:11:13.86,Default,,0,0,0,,- Đồ khốn.\N- Không biết tự lượng sức mình.
Dialogue: 0,0:11:16.69,0:11:18.75,Default,,0,0,0,,Con ở lại nhà Akagi ôn bài,
Dialogue: 0,0:11:19.56,0:11:20.84,Default,,0,0,0,,hôm nay sẽ ngủ lại.
Dialogue: 0,0:11:22.35,0:11:23.39,Default,,0,0,0,,Con nói thật mà.
Dialogue: 0,0:11:23.90,0:11:26.09,Default,,0,0,0,,Có mấy bạn khác trong đội bóng rổ\Ncũng ở đây nữa.
Dialogue: 0,0:11:26.20,0:11:28.00,Default,,0,0,0,,Bọn con đang ôn bài thật đó.
Dialogue: 0,0:11:28.83,0:11:30.61,Default,,0,0,0,,Biết rồi, tạm biệt.
Dialogue: 0,0:11:32.49,0:11:34.64,Default,,0,0,0,,Tin tưởng con trai mình tí đi chứ.
Dialogue: 0,0:11:34.71,0:11:36.92,Default,,0,0,0,,Hết cách,\Nanh đã từng quậy phá một thời gian mà.
Dialogue: 0,0:11:37.04,0:11:37.82,Default,,0,0,0,,Cậu nói gì thế hả?
Dialogue: 0,0:11:37.95,0:11:40.34,Default,,0,0,0,,Cái tên trượt bảy môn có tư cách nói tôi à?
Dialogue: 0,0:11:40.49,0:11:41.54,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:11:41.54,0:11:43.54,Default,,0,0,0,,Trượt bảy môn với bốn môn\Nthì vẫn là trượt thôi.
Dialogue: 0,0:11:46.17,0:11:47.46,Default,,0,0,0,,Tập trung vào Sakuragi.
Dialogue: 0,0:11:47.67,0:11:48.96,Default,,0,0,0,,Cậu làm xong rồi hả?
Dialogue: 0,0:11:49.40,0:11:51.46,Default,,0,0,0,,Đáng ghét, cầm lấy đi.
Dialogue: 0,0:11:56.24,0:11:57.93,Default,,0,0,0,,Đây là câu trả lời gì chứ?
Dialogue: 0,0:11:57.96,0:12:00.79,Default,,0,0,0,,Sao cậu lại làm ra được đáp án như vậy?
Dialogue: 0,0:12:01.68,0:12:02.64,Default,,0,0,0,,Sai rồi à?
Dialogue: 0,0:12:03.21,0:12:05.32,Default,,0,0,0,,Cái tên này, tôi hết chịu nổi rồi.
Dialogue: 0,0:12:05.39,0:12:08.33,Default,,0,0,0,,Hôm nay tôi phải...
Dialogue: 0,0:12:11.00,0:12:13.29,Default,,0,0,0,,Rukawa, không được ngủ.
Dialogue: 0,0:12:13.41,0:12:16.74,Default,,0,0,0,,Mấy đứa này không ra hồn gì cả.
Dialogue: 0,0:12:33.91,0:12:36.00,Default,,0,0,0,,Haruko. Haruko.
Dialogue: 0,0:12:36.97,0:12:38.13,Default,,0,0,0,,Anh, có chuyện gì thế?
Dialogue: 0,0:12:38.37,0:12:40.34,Default,,0,0,0,,Em tới giúp đỡ đi, anh lo không xuể.
Dialogue: 0,0:12:41.54,0:12:43.01,Default,,0,0,0,,Em cũng phải dạy họ sao?
Dialogue: 0,0:12:43.71,0:12:47.08,Default,,0,0,0,,[Đến rồi, mình có thể ôn bài một một với Haruko.]
Dialogue: 0,0:12:47.27,0:12:49.67,Default,,0,0,0,,[Đây là trong cái rủi có cái may à?]
Dialogue: 0,0:12:51.07,0:12:52.33,Default,,0,0,0,,Một kèm một.
Dialogue: 0,0:12:53.68,0:12:56.31,Default,,0,0,0,,- Chào cậu.\N- Sao lại thế này?
Dialogue: 0,0:13:09.37,0:13:11.86,Default,,0,0,0,,- Sao thế?\N- À không có gì.
Dialogue: 0,0:13:12.59,0:13:14.87,Default,,0,0,0,,Rukawa, chỗ này...
Dialogue: 0,0:13:15.96,0:13:17.43,Default,,0,0,0,,Mày có thái độ gì thế hả?
Dialogue: 0,0:13:17.45,0:13:19.50,Default,,0,0,0,,Thế mà dám bất lịch sự với Haruko.
Dialogue: 0,0:13:19.50,0:13:21.97,Default,,0,0,0,,- Cái đồ ngu này, dậy đi.\N- Sakuragi.
Dialogue: 0,0:13:22.84,0:13:26.84,Default,,0,0,0,,Cái gì? Mày muốn được Tinh Tinh Bự chỉ bài à?
Dialogue: 0,0:13:26.87,0:13:30.35,Default,,0,0,0,,Nếu mày muốn đổi người\Nthì để tao được Haruko chỉ bài.
Dialogue: 0,0:13:30.37,0:13:31.33,Default,,0,0,0,,Quyết định vậy đi.
Dialogue: 0,0:13:32.38,0:13:33.96,Default,,0,0,0,,Tập trung một chút cho tôi!
Dialogue: 0,0:13:34.09,0:13:35.42,Default,,0,0,0,,Đến phòng tôi đi.
Dialogue: 0,0:13:35.42,0:13:37.89,Default,,0,0,0,,Sức tập trung của tên này kém quá.
Dialogue: 0,0:13:41.62,0:13:44.29,Default,,0,0,0,,Thử làm đề này xem.
Dialogue: 0,0:13:45.93,0:13:47.69,Default,,0,0,0,,Trong lúc đó tôi sẽ ngủ trước.
Dialogue: 0,0:13:48.15,0:13:50.29,Default,,0,0,0,,Gian xảo, sao lại chỉ có anh được ngủ chứ?
Dialogue: 0,0:13:50.39,0:13:53.09,Default,,0,0,0,,Làm xong thì hẵng gọi tôi dậy.
Dialogue: 0,0:13:53.94,0:13:55.43,Default,,0,0,0,,Đáng ghét.
Dialogue: 0,0:14:14.63,0:14:15.56,Default,,0,0,0,,Ayako...
Dialogue: 0,0:14:23.17,0:14:24.30,Default,,0,0,0,,Tetsuo...
Dialogue: 0,0:14:26.18,0:14:27.87,Default,,0,0,0,,- Xong rồi.\N- Ừ.
Dialogue: 0,0:14:28.40,0:14:33.07,Default,,0,0,0,,Rukawa, muộn thế này\Nmà cậu còn giữ tỉnh táo được, đúng là kỳ tích.
Dialogue: 0,0:14:33.16,0:14:34.65,Default,,0,0,0,,Mắt của em khô quá...
Dialogue: 0,0:15:04.16,0:15:05.13,Default,,0,0,0,,Rukawa,
Dialogue: 0,0:15:06.09,0:15:09.39,Default,,0,0,0,,dạo này cậu luyện tập rất có khí thế.
Dialogue: 0,0:15:10.27,0:15:11.74,Default,,0,0,0,,Đã xảy ra chuyện gì sao?
Dialogue: 0,0:15:12.88,0:15:13.65,Default,,0,0,0,,Đừng ngủ nữa.
Dialogue: 0,0:15:14.28,0:15:15.72,Default,,0,0,0,,Em quan sát đúng đấy,
Dialogue: 0,0:15:16.89,0:15:20.35,Default,,0,0,0,,tuy không biết chuyện gì đã thúc ép cậu ấy
Dialogue: 0,0:15:20.45,0:15:23.54,Default,,0,0,0,,nhưng chị có thể thấy được dạo này\NRukawa có khí thế như vậy.
Dialogue: 0,0:15:24.27,0:15:29.59,Default,,0,0,0,,Không chừng cậu ấy sẽ trở thành tiêu đểm\Ncủa cả nước trong giải đấu toàn quốc đấy.
Dialogue: 0,0:15:41.48,0:15:42.77,Default,,0,0,0,,[Rukawa.]
Dialogue: 0,0:15:45.79,0:15:47.09,Default,,0,0,0,,Đã ngủ rồi?
Dialogue: 0,0:15:47.21,0:15:49.07,Default,,0,0,0,,Cậu làm xong rồi à?
Dialogue: 0,0:15:49.19,0:15:51.94,Default,,0,0,0,,Sakuragi, cậu đói bụng chưa?
Dialogue: 0,0:15:52.92,0:15:55.65,Default,,0,0,0,,Mình làm xong rồi,\Nhuống hồ gì Tinh Tinh Bự còn đang ngủ.
Dialogue: 0,0:16:00.90,0:16:01.91,Default,,0,0,0,,Xong rồi đây.
Dialogue: 0,0:16:03.11,0:16:03.94,Default,,0,0,0,,Là udon xào đó.
Dialogue: 0,0:16:05.31,0:16:07.78,Default,,0,0,0,,[Haruko dịu dàng quá,]
Dialogue: 0,0:16:08.05,0:16:09.74,Default,,0,0,0,,[tay nghề bếp núc còn tuyệt thế này nữa.]
Dialogue: 0,0:16:10.08,0:16:10.84,Default,,0,0,0,,Không thể nào...
Dialogue: 0,0:16:12.45,0:16:13.28,Default,,0,0,0,,Sakuragi,
Dialogue: 0,0:16:14.82,0:16:16.98,Default,,0,0,0,,khi tham gia giải đấu toàn quốc,
Dialogue: 0,0:16:18.83,0:16:20.27,Default,,0,0,0,,hi vọng xưng bá toàn quốc
Dialogue: 0,0:16:21.22,0:16:23.29,Default,,0,0,0,,ở trên người một mình cậu thôi.
Dialogue: 0,0:16:24.04,0:16:25.41,Default,,0,0,0,,Haruko nói đúng đấy,
Dialogue: 0,0:16:26.14,0:16:29.37,Default,,0,0,0,,trong hai tuần trước khi\Ngiải đấu toàn quốc bắt đầu,
Dialogue: 0,0:16:29.75,0:16:32.09,Default,,0,0,0,,người có tiềm lực phát triển lớn nhất
Dialogue: 0,0:16:32.33,0:16:33.86,Default,,0,0,0,,chính là người mới như cậu đấy.
Dialogue: 0,0:16:34.13,0:16:35.55,Default,,0,0,0,,Sakuragi Hanamchi.
Dialogue: 0,0:16:37.68,0:16:39.38,Default,,0,0,0,,Dậy đi, có nghe thấy chưa?
Dialogue: 0,0:16:39.95,0:16:41.71,Default,,0,0,0,,Sakuragi, cậu tiến bộ càng nhiều
Dialogue: 0,0:16:42.49,0:16:45.79,Default,,0,0,0,,thì Shohoku càng có thể\Ntiến lại gần mục tiêu xưng bá toàn quốc.
Dialogue: 0,0:16:46.38,0:16:48.30,Default,,0,0,0,,Nói như vậy
Dialogue: 0,0:16:48.38,0:16:50.04,Default,,0,0,0,,thì trách nhiệm xưng bá toàn quốc
Dialogue: 0,0:16:50.06,0:16:53.58,Default,,0,0,0,,quả nhiên được đè nặng\Nlên đôi vai của Sakuragi Hanamichi mình.
Dialogue: 0,0:16:55.52,0:16:56.99,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:16:57.07,0:16:59.56,Default,,0,0,0,,Thế nên cậu phải\Ncố gắng trong buổi thi lại ngày mai nhé.
Dialogue: 0,0:17:00.89,0:17:03.15,Default,,0,0,0,,Mình là Sakuragi\Nvới danh hiệu vua thi lại đó.
Dialogue: 0,0:17:03.29,0:17:04.90,Default,,0,0,0,,Tối nay mình sẽ không nhắm mắt đâu.
Dialogue: 0,0:17:04.90,0:17:05.97,Default,,0,0,0,,Là sao?
Dialogue: 0,0:17:05.97,0:17:08.32,Default,,0,0,0,,Mình sẽ học cùng cậu tới sáng.
Dialogue: 0,0:17:08.45,0:17:10.25,Default,,0,0,0,,Chúng ta cùng cố gắng nhé Sakuragi.
Dialogue: 0,0:17:10.25,0:17:11.23,Default,,0,0,0,,Thành công rồi,
Dialogue: 0,0:17:11.38,0:17:13.76,Default,,0,0,0,,cuối cùng mình cũng có thể\Nôn bài một một với Haruko.
Dialogue: 0,0:17:13.92,0:17:14.94,Default,,0,0,0,,Mày nghe thấy chưa?
Dialogue: 0,0:17:15.04,0:17:17.63,Default,,0,0,0,,Có xưng bá toàn quốc thành công hay không\Nthì nhờ vào Sakuragi tao đó.
Dialogue: 0,0:17:17.82,0:17:21.13,Default,,0,0,0,,Nghe thấy chưa?\NCon hồ ly thích ngủ này, nghe thấy chưa?
Dialogue: 0,0:17:21.27,0:17:22.33,Default,,0,0,0,,Đừng làm cậu ấy tỉnh dậy.
Dialogue: 0,0:17:22.91,0:17:23.96,Default,,0,0,0,,Mình ăn đây.
Dialogue: 0,0:17:24.36,0:17:26.23,Default,,0,0,0,,Ngon quá... Ngon quá...
Dialogue: 0,0:17:28.18,0:17:30.08,Default,,0,0,0,,- Ngon quá.\N- Cậu đang khóc gì vậy?
Dialogue: 0,0:17:30.73,0:17:33.85,Default,,0,0,0,,Nhất định sẽ cố gắng.
Dialogue: 0,0:17:38.01,0:17:39.10,Default,,0,0,0,,Dậy thôi.
Dialogue: 0,0:17:40.01,0:17:41.41,Default,,0,0,0,,Mấy cậu muốn ngủ tới khi nào?
Dialogue: 0,0:17:42.20,0:17:44.40,Default,,0,0,0,,Tất cả mọi người dậy hết cho tôi.
Dialogue: 0,0:17:46.78,0:17:48.65,Default,,0,0,0,,Shohoku có thể xưng bà toàn quốc hay không
Dialogue: 0,0:17:48.84,0:17:51.33,Default,,0,0,0,,thì phải xem thành tích hôm nay\Ncủa mấy cậu đấy.
Dialogue: 0,0:17:51.33,0:17:52.72,Default,,0,0,0,,Tuyệt đối không phải do tôi nói quá đâu.
Dialogue: 0,0:17:53.46,0:17:56.23,Default,,0,0,0,,Cho dù thế nào đi chăng nữa,\Nhôm nay phải thi lại phải qua cho tôi.
Dialogue: 0,0:17:56.34,0:17:58.60,Default,,0,0,0,,Biết chưa? Phải có quyết tâm liều chết.
Dialogue: 0,0:18:01.97,0:18:03.49,Default,,0,0,0,,Làm gì vậy? Có gì buồn cười đâu.
Dialogue: 0,0:18:04.70,0:18:05.53,Default,,0,0,0,,Anh ơi...
Dialogue: 0,0:18:06.22,0:18:07.56,Default,,0,0,0,,Có chuyện gì thế nào?
Dialogue: 0,0:18:07.63,0:18:09.92,Default,,0,0,0,,Đây là sự trừng phạt vì anh đã lén ngủ.
Dialogue: 0,0:18:12.91,0:18:15.43,Default,,0,0,0,,Sakuragi, cái tên này lắm chuyện nhỉ.
Dialogue: 0,0:18:15.58,0:18:21.37,Default,,0,0,0,,- Tên thối không cố gắng ôn bài, đồ ngu.\N- Dừng tay, cứu mạng.
Dialogue: 0,0:18:21.53,0:18:23.93,Default,,0,0,0,,[Rukawa đã từng ngồi ở chiếc ghế này.]
Dialogue: 0,0:18:30.51,0:18:31.59,Default,,0,0,0,,[Sau khi tan học]
Dialogue: 0,0:18:42.64,0:18:44.57,Default,,0,0,0,,Sắp thi xong rồi nhỉ.
Dialogue: 0,0:18:44.74,0:18:47.54,Default,,0,0,0,,Không biết đám thi trượt có sao không?
Dialogue: 0,0:18:47.98,0:18:49.29,Default,,0,0,0,,Những người khác chắc không sao đâu,
Dialogue: 0,0:18:49.29,0:18:50.78,Default,,0,0,0,,cơ mà Hanamichi thì nguy hiểm đấy.
Dialogue: 0,0:18:50.90,0:18:52.44,Default,,0,0,0,,Chỉ có thể cầu nguyện kỳ tích xuất hiện.
Dialogue: 0,0:18:52.62,0:18:53.55,Default,,0,0,0,,Không sao đâu,
Dialogue: 0,0:18:53.75,0:18:57.56,Default,,0,0,0,,tối qua Sakuragi thức trắng\Nđể liều mạng ôn bài.
Dialogue: 0,0:18:59.79,0:19:00.72,Default,,0,0,0,,[Sakuragi...]
Dialogue: 0,0:19:12.47,0:19:15.17,Default,,0,0,0,,Thành công rồi!
Dialogue: 0,0:19:16.24,0:19:21.16,Default,,0,0,0,,Xảy ra kỳ tích rồi,\NHanamichi đúng là thằng nhóc may mắn.
Dialogue: 0,0:19:21.16,0:19:22.13,Default,,0,0,0,,[Tốt quá.]
Dialogue: 0,0:19:24.41,0:19:26.45,Default,,0,0,0,,Làm uổng công lo lắng.
Dialogue: 0,0:19:26.89,0:19:29.48,Default,,0,0,0,,Akagi, tập huấn ôn bài lần này\Nquả nhiên không vô dụng.
Dialogue: 0,0:19:30.19,0:19:31.88,Default,,0,0,0,,Đám ngu đó...
Dialogue: 0,0:19:39.59,0:19:43.39,Default,,0,0,0,,Thắng nhẹ nhàng (rất miễn cưỡng)
Dialogue: 0,0:19:39.92,0:19:41.38,Default,,0,0,0,,[Vừa đủ]
Dialogue: 0,0:19:44.28,0:19:46.11,Default,,0,0,0,,Nào, tập họp.
Dialogue: 0,0:19:48.52,0:19:49.32,Default,,0,0,0,,Nghe đây
Dialogue: 0,0:19:49.49,0:19:51.32,Default,,0,0,0,,hôm nay phải cố gắng lên,
Dialogue: 0,0:19:51.35,0:19:53.06,Default,,0,0,0,,bổ sung những chỗ thụt lùi.
Dialogue: 0,0:19:53.08,0:19:54.63,Default,,0,0,0,,Cố lên vì mục tiêu xưng bá toàn quốc.
Dialogue: 0,0:19:54.75,0:19:57.63,Default,,0,0,0,,Shohoku cố lên!
Dialogue: 0,0:20:21.20,0:20:24.71,Default,,0,0,0,,Không được, tay thấp quá, dùng đầu gối.
Dialogue: 0,0:20:30.31,0:20:32.68,Default,,0,0,0,,[Giải đấu toàn quốc đang áp sát từng ngày.]
Dialogue: 0,0:20:34.26,0:20:35.86,Default,,0,0,0,,[Shohoku]
Dialogue: 0,0:20:36.88,0:20:39.58,Default,,0,0,0,,[có thể tham gia với tổ hợp mạnh nhất rồi.]
Dialogue: 0,0:20:48.56,0:20:55.88,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:20:56.36,0:21:03.42,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:21:13.85,0:21:20.51,Default,,0,0,0,,♫ Từng một lòng muốn thực hiện\Nnhững ước mơ xưa cũ ♫
