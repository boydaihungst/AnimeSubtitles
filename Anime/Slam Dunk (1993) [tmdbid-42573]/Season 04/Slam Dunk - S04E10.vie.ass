Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.79,0:00:20.67,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.77,0:00:24.02,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.78,0:00:30.30,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.53,0:00:36.57,Default,,0,0,0,,♫ Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.49,0:00:44.33,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.13,0:00:51.13,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.32,0:00:57.13,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.22,0:01:03.20,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.29,0:01:10.03,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.97,0:01:19.92,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:20.04,0:01:26.07,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.21,0:01:31.98,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:32.08,0:01:40.48,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:55.41,0:01:58.11,Default,,0,0,0,,[Sau khi đội bóng rổ Shohoku giành được\Nquyền đại diện tham dự giải đấu toàn quốc,]
Dialogue: 0,0:01:58.22,0:01:59.91,Default,,0,0,0,,[có thể nói những con người mang chí lớn\Nmuốn xưng bá giới bóng rổ như họ]
Dialogue: 0,0:02:00.02,0:02:02.51,Default,,0,0,0,,[đã càng khẩn trương tập luyện hơn.]
Dialogue: 0,0:02:02.76,0:02:06.01,Default,,0,0,0,,[Đánh bại Moroboshi Dai có biệt hiệu\N"Ngôi sao của Aichi" của Học viện Aiwa.]
Dialogue: 0,0:02:09.19,0:02:10.62,Default,,0,0,0,,[Người mới của trường công nghiệp Meihou,\NMorishige Hiroshi.]
Dialogue: 0,0:02:10.73,0:02:14.08,Default,,0,0,0,,[Sức mạnh to lớn và sự thể hiện năng nổ\Ncủa người đó]
Dialogue: 0,0:02:14.18,0:02:16.84,Default,,0,0,0,,[đã làm dấy lên ý chí chiến đấu của Hanamichi.]
Dialogue: 0,0:02:25.62,0:02:26.55,Default,,0,0,0,,[Chính vào lúc này,]
Dialogue: 0,0:02:26.79,0:02:29.04,Default,,0,0,0,,[kẻ địch mạnh nhất\Ntrong cuộc đời Hanamichi - Rukawa]
Dialogue: 0,0:02:29.17,0:02:35.69,Default,,0,0,0,,[đã nói với huấn luyện viên Anzai\Nvề nguyện vọng muốn sang Mỹ du học.]
Dialogue: 0,0:02:36.31,0:02:44.68,Default,,0,0,0,,[Mỹ - Vương quốc của bóng rổ!]
Dialogue: 0,0:02:38.76,0:02:41.36,Default,,0,0,0,,[Mỹ - Vương quốc của bóng rổ!]
Dialogue: 0,0:02:50.90,0:02:51.91,Default,,0,0,0,,Tóm lại dù thế nào
Dialogue: 0,0:02:52.02,0:02:54.82,Default,,0,0,0,,cậu phải nghĩ cách trở thành\Nhọc sinh cấp ba số một của Nhật Bản đã,
Dialogue: 0,0:02:59.33,0:03:01.92,Default,,0,0,0,,khi đó đi Mỹ cũng không muộn.
Dialogue: 0,0:03:16.88,0:03:18.11,Default,,0,0,0,,Là con tôm, con tôm!
Dialogue: 0,0:03:18.48,0:03:20.65,Default,,0,0,0,,Cậu đúng là đồ đần độn, đó không phải con tôm!
Dialogue: 0,0:03:20.65,0:03:21.93,Default,,0,0,0,,Đó là con cọp.
Dialogue: 0,0:03:22.06,0:03:24.99,Default,,0,0,0,,Cọp gì? Loài động vật này có ăn được không?
Dialogue: 0,0:03:25.03,0:03:25.96,Default,,0,0,0,,Ăn?
Dialogue: 0,0:03:29.60,0:03:33.45,Default,,0,0,0,,Mà nhắc tới chuyện này, tôi đói bụng rồi,\Nchúng ta vào trong ăn cơm đi.
Dialogue: 0,0:03:33.70,0:03:36.32,Default,,0,0,0,,Đồ khốn, chẳng phải bây giờ cậu\Nkhông có đồng nào à?
Dialogue: 0,0:03:36.35,0:03:37.84,Default,,0,0,0,,Còn muốn ăn cơm...
Dialogue: 0,0:03:37.92,0:03:39.65,Default,,0,0,0,,Nhắc tới Nagoya là tôi nghĩ ngay đến\Nmì Kishime, Kishime.
Dialogue: 0,0:03:39.99,0:03:40.92,Default,,0,0,0,,Có rồi!
Dialogue: 0,0:03:41.65,0:03:43.27,Default,,0,0,0,,Khỉ Đầu Đỏ, cậu về ngay cho tôi!
Dialogue: 0,0:03:54.23,0:03:57.18,Default,,0,0,0,,[Khi Maki và Sakuragi\Nđến nơi đấu loại ở tỉnh Aichi,]
Dialogue: 0,0:03:57.30,0:03:59.86,Default,,0,0,0,,[một người khác Osaka.]
Dialogue: 0,0:04:01.14,0:04:03.54,Default,,0,0,0,,[Tên người này là Hikoichi.]
Dialogue: 0,0:04:04.47,0:04:06.34,Default,,0,0,0,,[Mình phải quan sát thật kỹ,\Ncố hết sức quan sát.]
Dialogue: 0,0:04:07.91,0:04:09.46,Default,,0,0,0,,["Hikoichi, cậu có khỏe không?"]
Dialogue: 0,0:04:09.58,0:04:11.71,Default,,0,0,0,,["Sau lần đó, tôi đã vào trường cấp ba Toyotama,"]
Dialogue: 0,0:04:11.85,0:04:13.32,Default,,0,0,0,,["vẫn tiếp tục chơi bóng rổ."]
Dialogue: 0,0:04:14.28,0:04:15.56,Default,,0,0,0,,["Tôi khỏe lắm."]
Dialogue: 0,0:04:15.66,0:04:17.39,Default,,0,0,0,,[Không ngờ Teruo lại vào được\Ntrường cấp ba Toyotama,]
Dialogue: 0,0:04:17.51,0:04:18.53,Default,,0,0,0,,[đó là trường điểm đó.]
Dialogue: 0,0:04:18.97,0:04:21.44,Default,,0,0,0,,["Năm nay chắc bọn tôi\Nsẽ vào được giải đấu toàn quốc."]
Dialogue: 0,0:04:21.56,0:04:23.50,Default,,0,0,0,,["Trận đấu được tổ chức tại địa phương,"]
Dialogue: 0,0:04:23.59,0:04:25.15,Default,,0,0,0,,["nếu có cơ hội về thì phải đến xem nhé."]
Dialogue: 0,0:04:25.27,0:04:26.52,Default,,0,0,0,,["Okawa Teruo."]
Dialogue: 0,0:04:26.99,0:04:29.33,Default,,0,0,0,,[Teruo, tôi đến thăm cậu rồi đây.]
Dialogue: 0,0:04:29.50,0:04:30.26,Default,,0,0,0,,[Nhưng...]
Dialogue: 0,0:04:30.50,0:04:31.28,Default,,0,0,0,,["Tái bút."]
Dialogue: 0,0:04:31.36,0:04:32.31,Default,,0,0,0,,["Tuy tôi mới lớp 10"]
Dialogue: 0,0:04:32.31,0:04:34.01,Default,,0,0,0,,["nhưng đã được chọn làm\Nthành viên chính thức của đội bóng rồi."]
Dialogue: 0,0:04:34.18,0:04:35.86,Default,,0,0,0,,[Chỗ này có hơi lạ.]
Dialogue: 0,0:04:36.00,0:04:38.63,Default,,0,0,0,,[Vóc người của cậu ấy nhỏ hơn mình,\Nvả lại còn là đàn em của mình mà.]
Dialogue: 0,0:04:39.82,0:04:41.31,Default,,0,0,0,,["Tái bút lại thêm tái bút nữa."]
Dialogue: 0,0:04:41.43,0:04:43.68,Default,,0,0,0,,["Ryonan vào được giải đấu toàn quốc chưa?"]
Dialogue: 0,0:04:43.78,0:04:46.30,Default,,0,0,0,,["Tôi mong chờ cơ hội được gặp Ryonan\Ntrong giải đấu toàn quốc lắm."]
Dialogue: 0,0:04:46.61,0:04:49.99,Default,,0,0,0,,[Đáng ghét, làm mình nhớ đến chuyện đau lòng.]
Dialogue: 0,0:04:50.13,0:04:52.53,Default,,0,0,0,,[Thật sự chỉ có đôi chút chênh lệch thôi.]
Dialogue: 0,0:04:59.02,0:05:00.14,Default,,0,0,0,,Xông lên!
Dialogue: 0,0:05:13.27,0:05:16.29,Default,,0,0,0,,Thắng rồi! Thắng rồi!
Dialogue: 0,0:05:16.60,0:05:19.44,Default,,0,0,0,,Hay quá thắng rồi!
Dialogue: 0,0:05:19.50,0:05:24.27,Default,,0,0,0,,Vào giải đấu toàn quốc rồi,\Nthắng rồi thắng rồi, hay quá!
Dialogue: 0,0:05:29.30,0:05:31.11,Default,,0,0,0,,[Trận đấu của bọn mình\Nvới Shohoku và cả Kainan]
Dialogue: 0,0:05:31.21,0:05:33.16,Default,,0,0,0,,[thật sự chỉ có một chút chênh lệch thôi.]
Dialogue: 0,0:05:36.49,0:05:37.82,Default,,0,0,0,,[Đối với những đàn anh lớp 12,]
Dialogue: 0,0:05:37.99,0:05:40.09,Default,,0,0,0,,[trận đấu với Shohoku đã trở thành\Ntrận về hưu của họ.]
Dialogue: 0,0:05:41.73,0:05:43.68,Default,,0,0,0,,[Ban đầu tưởng rằng ít ra Uozumi\Nsẽ được vào giải đấu toàn quốc,]
Dialogue: 0,0:05:43.68,0:05:45.15,Default,,0,0,0,,[nào ngờ anh ấy nghỉ rồi,]
Dialogue: 0,0:05:45.38,0:05:47.94,Default,,0,0,0,,[đi theo bố anh ấy học làm đầu bếp.]
Dialogue: 0,0:05:52.87,0:05:53.72,Default,,0,0,0,,[Sau khi lớp 12 đi,]
Dialogue: 0,0:05:53.83,0:05:55.17,Default,,0,0,0,,[tuy đã xuất hiện một chỗ trống rất lớn,]
Dialogue: 0,0:05:55.28,0:05:57.52,Default,,0,0,0,,[nhưng so ra thì sự luân chuyển\Ngiữa đội cũ và đội mới của chúng ta]
Dialogue: 0,0:05:57.59,0:05:59.39,Default,,0,0,0,,[lại nhanh hơn bất kỳ một đội mạnh nào.]
Dialogue: 0,0:06:03.71,0:06:06.74,Default,,0,0,0,,[Cứ chờ mà xem,\Nchắc chắn thời đại của Ryonan sẽ đến thôi.]
Dialogue: 0,0:06:06.92,0:06:08.29,Default,,0,0,0,,[Mình chắc chắn phải khiến Ryonan\Nxưng bá thiên hạ.]
Dialogue: 0,0:06:10.27,0:06:15.08,Default,,0,0,0,,[Hội trường dự tuyển tỉnh Osaka]
Dialogue: 0,0:06:15.93,0:06:16.80,Default,,0,0,0,,Hikoichi.
Dialogue: 0,0:06:17.75,0:06:20.64,Default,,0,0,0,,Cậu là Hikoichi đó sao?\NCậu thật sự đến thăm tôi à? Cảm ơn nhé.
Dialogue: 0,0:06:20.82,0:06:23.34,Default,,0,0,0,,Khoan, khoan đã, cậu là Teruo à?
Dialogue: 0,0:06:29.03,0:06:31.00,Default,,0,0,0,,Bây giờ cậu cao bao nhiêu vậy?
Dialogue: 0,0:06:31.16,0:06:32.43,Default,,0,0,0,,181cm.
Dialogue: 0,0:06:32.54,0:06:34.35,Default,,0,0,0,,181cm?
Dialogue: 0,0:06:36.86,0:06:38.61,Default,,0,0,0,,À, tôi biết rồi.
Dialogue: 0,0:06:38.89,0:06:41.34,Default,,0,0,0,,Tôi chuyển đi hồi học lớp 8
Dialogue: 0,0:06:41.85,0:06:44.31,Default,,0,0,0,,nên trong ấn tượng của cậu,\Ntôi vẫn là một thằng lùn đúng không?
Dialogue: 0,0:06:44.43,0:06:45.76,Default,,0,0,0,,Thảo nào...
Dialogue: 0,0:06:46.28,0:06:49.44,Default,,0,0,0,,Sau đó tôi đột nhiên cao lên,\Ncao khoảng 20cm á.
Dialogue: 0,0:06:49.89,0:06:52.40,Default,,0,0,0,,Nhưng sao Hikoichi cậu\Nkhông cao thêm được chút nào vậy?
Dialogue: 0,0:06:52.51,0:06:54.55,Default,,0,0,0,,Nói bậy! Tất nhiên tôi có cao hơn rồi.
Dialogue: 0,0:06:54.65,0:06:55.81,Default,,0,0,0,,Cao hơn 2cm đó nhé.
Dialogue: 0,0:06:56.21,0:06:57.30,Default,,0,0,0,,Mà ngược lại là Teruo cậu đấy,
Dialogue: 0,0:06:57.48,0:07:00.60,Default,,0,0,0,,cậu cao lên rồi,\Ncả thái độ cũng trở nên kiêu căng luôn.
Dialogue: 0,0:07:00.78,0:07:03.31,Default,,0,0,0,,Ban nãy còn dám xưng hô tên của tôi.
Dialogue: 0,0:07:03.36,0:07:05.65,Default,,0,0,0,,Cậu đừng quên, cậu là đàn em của tôi đấy.
Dialogue: 0,0:07:05.71,0:07:07.61,Default,,0,0,0,,Đừng quên tôi là người\Nđã dạy cậu chơi bóng rổ đấy.
Dialogue: 0,0:07:08.22,0:07:10.81,Default,,0,0,0,,Sao cậu lại nhắc đến chuyện hồi còn nhỏ chứ.
Dialogue: 0,0:07:12.33,0:07:14.25,Default,,0,0,0,,Nói vậy đúng thật, nhưng...
Dialogue: 0,0:07:14.36,0:07:16.85,Default,,0,0,0,,Quá khứ là quá khứ, hiện tại là hiện tại.
Dialogue: 0,0:07:17.92,0:07:18.98,Default,,0,0,0,,Đúng rồi, Hikoichi.
Dialogue: 0,0:07:19.19,0:07:21.99,Default,,0,0,0,,Ryonan các cậu có vào được\Ngiải đấu toàn quốc không?
Dialogue: 0,0:07:24.33,0:07:25.30,Default,,0,0,0,,Tôi rất quan tâm.
Dialogue: 0,0:07:25.70,0:07:28.43,Default,,0,0,0,,Ryonan, đội bóng rổ Ryonan\Ncủa tỉnh Kanagawa phải không?
Dialogue: 0,0:07:29.95,0:07:30.95,Default,,0,0,0,,Kishimoto.
Dialogue: 0,0:07:33.47,0:07:35.17,Default,,0,0,0,,Anh ấy là cầu thủ\Nát chủ bài của bọn tôi - Kishimoto.
Dialogue: 0,0:07:35.33,0:07:37.40,Default,,0,0,0,,Chính anh ấy là người dạy tôi\Nchơi bóng rổ thật sự.
Dialogue: 0,0:07:37.53,0:07:39.02,Default,,0,0,0,,Là người dạy tôi bóng rổ chân chính.
Dialogue: 0,0:07:39.50,0:07:40.23,Default,,0,0,0,,[Đáng ghét.]
Dialogue: 0,0:07:40.90,0:07:43.30,Default,,0,0,0,,Chẳng phải đội bóng của các cậu\Ncó một người tên Sendoh đó sao?
Dialogue: 0,0:07:44.01,0:07:45.70,Default,,0,0,0,,Sao anh biết anh ấy?
Dialogue: 0,0:07:46.04,0:07:47.36,Default,,0,0,0,,Bên trên có viết này.
Dialogue: 0,0:07:47.94,0:07:49.14,Default,,0,0,0,,Phần của tỉnh Kanagawa.
Dialogue: 0,0:07:49.81,0:07:54.85,Default,,0,0,0,,Cầu thủ thiên tài của Ryonan, bạn nhất định phải xem\Nkỹ thuật chơi bóng của Sendoh Akira đấy.
Dialogue: 0,0:07:54.96,0:07:56.13,Default,,0,0,0,,Trên này khen cậu ta như thiên tài vậy.
Dialogue: 0,0:07:56.21,0:07:57.65,Default,,0,0,0,,[Đây là bài báo của chị mình.]
Dialogue: 0,0:07:57.81,0:08:01.99,Default,,0,0,0,,Trong số những tuyển thủ bóng rổ trong nước,\Nmột thiên tài có trình độ như cậu ta
Dialogue: 0,0:08:01.99,0:08:03.04,Default,,0,0,0,,cực kỳ hiếm thấy đấy.
Dialogue: 0,0:08:03.63,0:08:05.08,Default,,0,0,0,,Vả lại mới chỉ là một học sinh cấp ba thôi.
Dialogue: 0,0:08:05.22,0:08:08.02,Default,,0,0,0,,Quá đáng quá rồi đấy.
Dialogue: 0,0:08:09.14,0:08:11.99,Default,,0,0,0,,Nếu được gặp cậu ta trong giải đấu toàn quốc,\Nchắc chắn tôi sẽ làm cậu ta bẽ mặt.
Dialogue: 0,0:08:38.95,0:08:43.51,Default,,0,0,0,,Được rồi, cũng đến lúc đi rồi.
Dialogue: 0,0:08:48.79,0:08:50.78,Default,,0,0,0,,Lần này họ không vào được giải đấu toàn quốc.
Dialogue: 0,0:08:51.18,0:08:52.84,Default,,0,0,0,,Từ đó có thể thấy thực lực của cậu ta\Ncũng chẳng ra gì.
Dialogue: 0,0:08:53.01,0:08:55.15,Default,,0,0,0,,Bài báo này thổi phồng cậu ta quá đà rồi.
Dialogue: 0,0:08:56.37,0:08:57.27,Default,,0,0,0,,Làm người ta buồn cười ghê.
Dialogue: 0,0:08:59.50,0:09:01.77,Default,,0,0,0,,Vậy tôi cũng nói thẳng nhé.
Dialogue: 0,0:09:03.52,0:09:04.74,Default,,0,0,0,,Thứ người như anh
Dialogue: 0,0:09:04.74,0:09:07.54,Default,,0,0,0,,còn không bằng một cái đầu ngón chân\Ncủa Sendoh nữa đấy, đồ ngu si.
Dialogue: 0,0:09:07.54,0:09:08.43,Default,,0,0,0,,Cậu nói gì?
Dialogue: 0,0:09:08.57,0:09:10.81,Default,,0,0,0,,Đồ ngu si, đồ ăn hại, đồ đần độn,\Nđồ khốn nạn cấp độ ba!
Dialogue: 0,0:09:10.90,0:09:11.89,Default,,0,0,0,,Cái tên này làm sao vậy?
Dialogue: 0,0:09:13.73,0:09:16.06,Default,,0,0,0,,[Trường cấp ba Toyotama đáng ghét!]
Dialogue: 0,0:09:16.20,0:09:17.44,Default,,0,0,0,,[Không thể tha thứ được.]
Dialogue: 0,0:09:17.53,0:09:20.68,Default,,0,0,0,,[Mình phải điều tra cho kỹ,\Nmình nhất định phải tra đến cùng mới được.]
Dialogue: 0,0:09:21.23,0:09:23.72,Default,,0,0,0,,[Tôi phải photo\Nthông tin về các anh ra thành thật nhiều bản]
Dialogue: 0,0:09:23.81,0:09:25.30,Default,,0,0,0,,[đưa cho người của Shohoku và Ryonan.]
Dialogue: 0,0:09:27.22,0:09:29.11,Default,,0,0,0,,[Tóm lại tôi phải viết trước là]
Dialogue: 0,0:09:29.22,0:09:32.14,Default,,0,0,0,,[tính cách của cầu thủ át chủ bài Kishimoto\Ncực kỳ tồi tệ.]
Dialogue: 0,0:09:33.40,0:09:38.42,Default,,0,0,0,,[Nhưng vị vua thật sự của Osaka\Nkhông phải trường cấp ba Toyotama.]
Dialogue: 0,0:09:40.53,0:09:42.26,Default,,0,0,0,,Rút về phòng thủ, mau rút về phòng thủ!
Dialogue: 0,0:09:49.84,0:09:50.64,Default,,0,0,0,,[Chuyền đẹp lắm!]
Dialogue: 0,0:09:53.44,0:09:54.30,Default,,0,0,0,,Hay quá!
Dialogue: 0,0:09:55.04,0:09:56.16,Default,,0,0,0,,Đẹp lắm đẹp lắm!
Dialogue: 0,0:09:56.47,0:09:57.70,Default,,0,0,0,,Cách biệt lớn rồi.
Dialogue: 0,0:09:59.67,0:10:02.15,Default,,0,0,0,,Đáng ghét, Tsuchiya,\Ntôi liều với cậu đến cùng!
Dialogue: 0,0:10:02.28,0:10:03.46,Default,,0,0,0,,[Cái tên ngốc Kishimoto kia]
Dialogue: 0,0:10:03.56,0:10:06.13,Default,,0,0,0,,[gần như bị số 4 của đội xanh lá chơi đùa luôn.]
Dialogue: 0,0:10:06.25,0:10:07.74,Default,,0,0,0,,[Đáng đời, biết sự lợi hại chưa?]
Dialogue: 0,0:10:08.08,0:10:09.09,Default,,0,0,0,,[Tên nhóc Teruo kia]
Dialogue: 0,0:10:09.09,0:10:11.03,Default,,0,0,0,,[cũng chỉ ngồi trên băng ghế dự bị hô hò thôi.]
Dialogue: 0,0:10:11.26,0:10:13.93,Default,,0,0,0,,Đáng ghét, Kishimoto, anh phải cố lên!
Dialogue: 0,0:10:14.87,0:10:15.84,Default,,0,0,0,,[Học viện Daiei]
Dialogue: 0,0:10:16.30,0:10:18.93,Default,,0,0,0,,[lấy cầu thủ số 4 làm trung tâm,\Ncả đội bóng vô cùng ăn ý với nhau.]
Dialogue: 0,0:10:19.51,0:10:20.40,Default,,0,0,0,,[Người số 4 đó cao to quá,]
Dialogue: 0,0:10:20.55,0:10:23.65,Default,,0,0,0,,[thuộc loại chỉ huy bình tĩnh,\Náp dụng linh hoạt những ưu điểm của đồng đội.]
Dialogue: 0,0:10:23.75,0:10:26.20,Default,,0,0,0,,[Cảm giác chung một loại với Sendoh.]
Dialogue: 0,0:10:41.88,0:10:46.04,Default,,0,0,0,,Hay quá hay quá hay quá!
Dialogue: 0,0:10:47.45,0:10:50.59,Default,,0,0,0,,[Đội cần điều tra thật sự\Nlà Học viện Daiei này.]
Dialogue: 0,0:10:52.95,0:10:54.58,Default,,0,0,0,,[Số 4, Tsuchiya.]
Dialogue: 0,0:10:55.28,0:10:56.47,Default,,0,0,0,,[Mình phải điều tra anh ta thật rõ ràng!]
Dialogue: 0,0:10:58.23,0:10:59.72,Default,,0,0,0,,[Quả nhiên đến đây một chuyến\Nlà quyết định đúng đắn.]
Dialogue: 0,0:11:00.23,0:11:04.17,Default,,0,0,0,,[Không chừng Daiei\Nmới là mục tiêu của thế hệ Ryonan mới.]
Dialogue: 0,0:11:28.25,0:11:29.18,Default,,0,0,0,,[Sang Mỹ?]
Dialogue: 0,0:11:30.35,0:11:31.94,Default,,0,0,0,,Tôi không tán thành cậu đi.
Dialogue: 0,0:11:34.92,0:11:35.89,Default,,0,0,0,,[Tại sao?]
Dialogue: 0,0:11:41.49,0:11:42.68,Default,,0,0,0,,Tôi đưa cậu đến trạm xe nhé?
Dialogue: 0,0:11:46.88,0:11:49.58,Default,,0,0,0,,Lúc huấn luyện viên các cậu\Nlàm huấn luyện viên ở trường đại học,
Dialogue: 0,0:11:49.86,0:11:52.46,Default,,0,0,0,,có một sinh viên chạy sang Mỹ du học,
Dialogue: 0,0:11:52.71,0:11:55.63,Default,,0,0,0,,có lẽ đây đã là chuyện mười năm về trước rồi.
Dialogue: 0,0:11:56.26,0:11:57.79,Default,,0,0,0,,Cậu ấy tên Yazawa Ryuji,
Dialogue: 0,0:11:57.90,0:11:59.30,Default,,0,0,0,,cao khoảng hai mét,
Dialogue: 0,0:11:59.53,0:12:01.93,Default,,0,0,0,,còn có năng lực vận động hơn người nữa,
Dialogue: 0,0:12:02.06,0:12:04.46,Default,,0,0,0,,được công nhận là\Nsinh viên năm nhất có tương lai xán lạn.
Dialogue: 0,0:12:06.94,0:12:10.14,Default,,0,0,0,,[Đúng rồi, Rukawa, cậu có từng nghe đến\Ncái tên Ác ma tóc trắng chưa?]
Dialogue: 0,0:12:10.26,0:12:11.73,Default,,0,0,0,,[Ý bà là huấn luyện viên Anzai ạ?]
Dialogue: 0,0:12:11.96,0:12:12.52,Default,,0,0,0,,[Đúng vậy.]
Dialogue: 0,0:12:16.83,0:12:20.64,Default,,0,0,0,,[Huấn luyện viên Anzai khi ấy là người thầy\Nnổi tiếng trong giới bóng rổ đại học,]
Dialogue: 0,0:12:20.79,0:12:22.67,Default,,0,0,0,,[được mọi người gọi là Ác ma tóc trắng.]
Dialogue: 0,0:12:22.76,0:12:26.61,Default,,0,0,0,,[Là một huấn luyện viên ác quỷ\Nnổi tiếng nghiêm khắc.]
Dialogue: 0,0:12:30.65,0:12:31.38,Default,,0,0,0,,Chuyền bóng, chuyền bóng!
Dialogue: 0,0:12:33.28,0:12:33.87,Default,,0,0,0,,Yazawa.
Dialogue: 0,0:12:38.16,0:12:40.65,Default,,0,0,0,,[Lại sắp bị Ác ma tóc trắng mắng rồi,\Nkhông chịu nổi nữa.]
Dialogue: 0,0:12:48.99,0:12:51.16,Default,,0,0,0,,[Không nói lời nào trông còn đáng sợ hơn.]
Dialogue: 0,0:12:51.35,0:12:52.11,Default,,0,0,0,,Yazawa.
Dialogue: 0,0:12:52.22,0:12:52.73,Default,,0,0,0,,Có!
Dialogue: 0,0:12:54.13,0:12:56.65,Default,,0,0,0,,Yazawa, có phải cậu hiểu lầm gì rồi không?
Dialogue: 0,0:12:58.05,0:12:59.35,Default,,0,0,0,,[Thầy ấy không khác nào bọn lưu manh cả.]
Dialogue: 0,0:12:59.35,0:13:03.65,Default,,0,0,0,,Đội bóng không tồn tại vì cậu,\Nlà đội bóng cần cậu nên cậu mới ở đây.
Dialogue: 0,0:13:08.07,0:13:10.66,Default,,0,0,0,,Cậu có rõ không, nói đi.
Dialogue: 0,0:13:10.77,0:13:12.42,Default,,0,0,0,,Vâng, em rõ rồi ạ.
Dialogue: 0,0:13:12.83,0:13:15.39,Default,,0,0,0,,Tốt lắm, vậy cậu chạy nhanh 20 lần.
Dialogue: 0,0:13:17.81,0:13:19.83,Default,,0,0,0,,Cậu có rõ chưa?
Dialogue: 0,0:13:19.94,0:13:21.17,Default,,0,0,0,,Vâng, em rõ rồi ạ.
Dialogue: 0,0:13:22.81,0:13:24.51,Default,,0,0,0,,[Đáng ghét, đùa cái gì vậy?]
Dialogue: 0,0:13:24.61,0:13:25.81,Default,,0,0,0,,[Tại sao sau khi vào đại học,]
Dialogue: 0,0:13:25.98,0:13:28.47,Default,,0,0,0,,[mình vẫn phải chịu huấn luyện\Nnhư binh lính trong quân đội vậy?]
Dialogue: 0,0:13:29.33,0:13:30.97,Default,,0,0,0,,[Những bài tập bắt mình làm\Ntoàn là bài tập cơ bản.]
Dialogue: 0,0:13:31.08,0:13:32.46,Default,,0,0,0,,[Đội bóng kiểu này\Nkhông phù hợp với mình chút nào.]
Dialogue: 0,0:13:33.81,0:13:36.21,Default,,0,0,0,,[Mình phải vào một đội bóng\Ncó thể giúp mình tự do phát huy,]
Dialogue: 0,0:13:36.48,0:13:38.50,Default,,0,0,0,,[không thì phong cách của riêng mình\Nsẽ bị mài nhẵn hết.]
Dialogue: 0,0:13:40.53,0:13:42.97,Default,,0,0,0,,Hình như huấn luyện viên\Nnghiêm khắc với Yazawa quá nhỉ?
Dialogue: 0,0:13:43.13,0:13:44.79,Default,,0,0,0,,Điều này chứng tỏ huấn luyện viên\Ngửi gắm niềm tin ở cậu ấy.
Dialogue: 0,0:13:44.92,0:13:47.65,Default,,0,0,0,,Tên đó còn năng lực tiềm ẩn chưa phát huy ra
Dialogue: 0,0:13:48.69,0:13:51.35,Default,,0,0,0,,nên huấn luyện viên\Ncứ luôn bảo cậu ấy tập luyện cơ bản
Dialogue: 0,0:13:51.42,0:13:53.48,Default,,0,0,0,,là có kế hoạch\Ntạo dựng nền tảng tốt cho cậu ấy.
Dialogue: 0,0:13:53.89,0:13:54.94,Default,,0,0,0,,Nếu nền tảng không tốt
Dialogue: 0,0:13:55.05,0:13:57.64,Default,,0,0,0,,thì có tài giỏi đến mấy\Ncũng không đơm hoa kết trái đâu.
Dialogue: 0,0:14:02.47,0:14:04.20,Default,,0,0,0,,Có muốn thêm một chút không?
Dialogue: 0,0:14:14.11,0:14:14.90,Default,,0,0,0,,[Không làm nữa!]
Dialogue: 0,0:14:15.44,0:14:17.34,Default,,0,0,0,,[Chỗ này không có bóng rổ mà mình muốn chơi.]
Dialogue: 0,0:14:19.70,0:14:20.67,Default,,0,0,0,,[Mỹ.]
Dialogue: 0,0:14:21.89,0:14:22.54,Default,,0,0,0,,[Không chừng bây giờ]
Dialogue: 0,0:14:22.54,0:14:25.97,Default,,0,0,0,,[đã đến lúc thử thách với đội bóng rổ của Mỹ\Nmà mình hằng mong ước rồi.]
Dialogue: 0,0:14:26.75,0:14:27.61,Default,,0,0,0,,[Mình muốn đi Mỹ.]
Dialogue: 0,0:14:28.00,0:14:30.04,Default,,0,0,0,,[Đi xem thử kỹ năng chơi bóng cả mình xem có\Ntạo được một khoảng trời riêng hay không.]
Dialogue: 0,0:14:34.18,0:14:35.97,Default,,0,0,0,,[Dù không thành công cũng chẳng sao,]
Dialogue: 0,0:14:37.21,0:14:38.63,Default,,0,0,0,,[nhưng mình tin qua vài năm nữa,]
Dialogue: 0,0:14:38.74,0:14:40.16,Default,,0,0,0,,[chắc chắn mình sẽ thích ứng được\Nvới giới bóng rổ ở Mỹ.]
Dialogue: 0,0:14:40.41,0:14:44.26,Default,,0,0,0,,[Không chừng thành tựu của mình còn\Nvượt cả tưởng tượng của Ác ma tóc trắng nữa.]
Dialogue: 0,0:14:44.37,0:14:47.68,Default,,0,0,0,,[Đúng, mình nhất định phải thành công!]
Dialogue: 0,0:14:47.81,0:14:50.99,Default,,0,0,0,,[Mình phải đến Mỹ\Nđể kiểm tra tài năng của mình.]
Dialogue: 0,0:14:54.78,0:14:56.15,Default,,0,0,0,,[Khoảnh khắc ấy đã đến rồi.]
Dialogue: 0,0:15:00.26,0:15:02.63,Default,,0,0,0,,Tên Yazawa kia thật quá đáng.
Dialogue: 0,0:15:02.73,0:15:04.87,Default,,0,0,0,,Không thông báo gì cả
Dialogue: 0,0:15:04.87,0:15:06.44,Default,,0,0,0,,mà đột nhiên không đến trường,\Nchạy sang Mỹ du học rồi.
Dialogue: 0,0:15:08.02,0:15:09.06,Default,,0,0,0,,Các cậu xem, từ sau khi Yazawa đi rồi,
Dialogue: 0,0:15:09.06,0:15:10.82,Default,,0,0,0,,huấn luyện viên luôn mang dáng vẻ buồn bã.
Dialogue: 0,0:15:11.07,0:15:12.10,Default,,0,0,0,,Không chỉ vậy đâu
Dialogue: 0,0:15:12.10,0:15:13.78,Default,,0,0,0,,mà còn hay trầm ngâm một mình nữa.
Dialogue: 0,0:15:13.88,0:15:15.02,Default,,0,0,0,,Thầy ấy đặt nhiều hy vọng ở Yazawa như vậy,
Dialogue: 0,0:15:15.15,0:15:16.66,Default,,0,0,0,,nên tâm trạng cũng thấy buồn hơn.
Dialogue: 0,0:15:16.77,0:15:18.63,Default,,0,0,0,,Tôi cũng khá thân với Yazawa
Dialogue: 0,0:15:18.78,0:15:22.31,Default,,0,0,0,,nên dạo này huấn luyện viên\Nthường xuyên hỏi tôi về tin của Yazawa,
Dialogue: 0,0:15:22.44,0:15:25.38,Default,,0,0,0,,như Yazawa có liên lạc với tôi không
Dialogue: 0,0:15:25.46,0:15:26.66,Default,,0,0,0,,hoặc có viết thư về không.
Dialogue: 0,0:15:26.80,0:15:28.73,Default,,0,0,0,,Sang Mỹ rồi thì theo ai,
Dialogue: 0,0:15:28.84,0:15:29.97,Default,,0,0,0,,có tìm được con đường nào chưa.
Dialogue: 0,0:15:30.30,0:15:32.34,Default,,0,0,0,,Ban đầu Yazawa viết nhiều thư cho tôi lắm,
Dialogue: 0,0:15:32.74,0:15:34.27,Default,,0,0,0,,nhưng dạo này thì hoàn toàn không có nữa.
Dialogue: 0,0:15:35.79,0:15:37.17,Default,,0,0,0,,[Sau đó khoảng chừng một năm,]
Dialogue: 0,0:15:37.59,0:15:38.66,Default,,0,0,0,,[ngay khi mọi người sắp quên đi cậu ấy]
Dialogue: 0,0:15:38.78,0:15:41.07,Default,,0,0,0,,[thì có người gửi một cuộn băng đến,]
Dialogue: 0,0:15:41.42,0:15:44.51,Default,,0,0,0,,[bên trong ghi lại\Ndiễn biến của trận đấu bóng rổ.]
Dialogue: 0,0:15:44.87,0:15:47.53,Default,,0,0,0,,Nghe nói Yazawa cũng tham gia trận đấu này.
Dialogue: 0,0:15:50.04,0:15:51.47,Default,,0,0,0,,Ra rồi, chính là cậu ấy!
Dialogue: 0,0:15:51.59,0:15:52.58,Default,,0,0,0,,Là cậu ấy sao?
Dialogue: 0,0:15:55.04,0:15:56.75,Default,,0,0,0,,Cậu xem, cậu ấy để râu kìa.
Dialogue: 0,0:15:56.87,0:15:58.30,Default,,0,0,0,,Cậu ấy giỏi thật đó.
Dialogue: 0,0:15:58.32,0:16:00.03,Default,,0,0,0,,Cả sân chỉ mỗi cậu ấy là người Nhật.
Dialogue: 0,0:16:00.12,0:16:01.81,Default,,0,0,0,,Đúng vậy, tôi thật sự phải nhìn cậu ấy\Nbằng con mắt khác đó.
Dialogue: 0,0:16:04.48,0:16:06.03,Default,,0,0,0,,[Không hề tiến bộ chút nào cả.]
Dialogue: 0,0:16:06.98,0:16:09.83,Default,,0,0,0,,[Chỗ đó có ai dạy cơ bản cho Yazawa không?]
Dialogue: 0,0:16:09.95,0:16:11.83,Default,,0,0,0,,[Không biết khả năng tiếng Anh của Yazawa\Nthế nào rồi?]
Dialogue: 0,0:16:11.99,0:16:14.58,Default,,0,0,0,,[Nhìn dáng vẻ của cậu ấy như không hề có\Nsự trao đổi và liên hệ nào với các cầu thủ cả.]
Dialogue: 0,0:16:15.09,0:16:16.95,Default,,0,0,0,,[Đội bóng này thành lập thế nào vậy?]
Dialogue: 0,0:16:17.19,0:16:20.59,Default,,0,0,0,,[Mỗi người đều tự thể hiện riêng,\Nnhư một đội hình rời rạc vậy.]
Dialogue: 0,0:16:20.73,0:16:24.52,Default,,0,0,0,,[Rốt cuộc huấn luyện viên của đội bóng\Nđang làm gì?]
Dialogue: 0,0:16:25.46,0:16:27.95,Default,,0,0,0,,Đúng rồi, cậu đưa tôi\Nđịa chỉ liên lạc của cậu ấy đi.
Dialogue: 0,0:16:28.14,0:16:29.07,Default,,0,0,0,,Việc này khó lắm,
Dialogue: 0,0:16:29.34,0:16:31.83,Default,,0,0,0,,dạo này em muốn liên lạc với cậu ấy\Ncũng không được ạ.
Dialogue: 0,0:16:32.30,0:16:33.34,Default,,0,0,0,,Chắc cậu ấy đã chuyển nhà rồi.
Dialogue: 0,0:16:33.47,0:16:34.29,Default,,0,0,0,,Vậy à?
Dialogue: 0,0:16:37.17,0:16:38.50,Default,,0,0,0,,Về đi, Yazawa.
Dialogue: 0,0:16:38.66,0:16:40.42,Default,,0,0,0,,Tôi muốn đào tạo cậu\Ntrở thành cầu thủ giỏi nhất Nhật Bản
Dialogue: 0,0:16:40.52,0:16:43.36,Default,,0,0,0,,trước khi kết thúc sự nghiệp\Nlàm huấn luyện viên của mình.
Dialogue: 0,0:16:43.84,0:16:45.20,Default,,0,0,0,,Cậu là một mầm tốt,
Dialogue: 0,0:16:45.20,0:16:47.64,Default,,0,0,0,,một môi trường tốt sẽ giúp được cậu,\Nmôi trường xấu sẽ hủy hoại cậu.
Dialogue: 0,0:16:49.91,0:16:53.48,Default,,0,0,0,,[Tuyển thủ cao hai mét được gọi là\Nngười khổng lồ, đó là khi ở Nhật,]
Dialogue: 0,0:16:54.18,0:16:57.91,Default,,0,0,0,,[nhưng ở Mỹ, còn rất nhiều người\Ncó thể chất và tốc độ tốt.]
Dialogue: 0,0:16:58.42,0:17:01.56,Default,,0,0,0,,[Ngoài ra, lúc cấp ba cậu ấy chỉ toàn nhờ\Ntài năng bẩm sinh để thắng,]
Dialogue: 0,0:17:01.56,0:17:03.50,Default,,0,0,0,,[chứ hoàn toàn bỏ qua việc tập luyện cơ bản,]
Dialogue: 0,0:17:03.75,0:17:07.90,Default,,0,0,0,,[tất nhiên sẽ không thể trưởng thành\Nnhanh chóng như mong ước ban đầu rồi.]
Dialogue: 0,0:17:09.93,0:17:12.00,Default,,0,0,0,,Yazawa có gửi thư đến không?
Dialogue: 0,0:17:12.30,0:17:15.38,Default,,0,0,0,,Yazawa không gửi thư ạ,\Nsau đó cũng không luôn.
Dialogue: 0,0:17:15.51,0:17:16.59,Default,,0,0,0,,Vậy à?
Dialogue: 0,0:17:17.44,0:17:20.43,Default,,0,0,0,,Tôi đã liên lạc với trường đại học đó\Nđể hỏi thăm tin tức của cậu ấy,
Dialogue: 0,0:17:20.60,0:17:23.35,Default,,0,0,0,,nghe nói cậu ấy\Nđã không còn xuất hiện trong đội bóng rổ nữa.
Dialogue: 0,0:17:25.27,0:17:27.07,Default,,0,0,0,,[Yazawa, rốt cuộc cậu đang làm gì vậy?]
Dialogue: 0,0:17:35.31,0:17:38.19,Default,,0,0,0,,[Sau đó huấn luyện viên Anzai\Nđã dùng đủ mọi cách để tìm Yazawa,]
Dialogue: 0,0:17:38.32,0:17:39.69,Default,,0,0,0,,[nhưng đều không thành công.]
Dialogue: 0,0:17:41.25,0:17:44.10,Default,,0,0,0,,[Những sinh viên cùng khóa với Yazawa\Nđều đã tốt nghiệp cả rồi.]
Dialogue: 0,0:17:47.70,0:17:50.67,Default,,0,0,0,,[Sau khi Yazawa sang Mỹ,\Nmột buổi sáng năm thứ năm...]
Dialogue: 0,0:17:57.76,0:17:58.85,Default,,0,0,0,,Huấn luyện viên Anzai,
Dialogue: 0,0:18:01.50,0:18:03.73,Default,,0,0,0,,đây là thứ mà tôi tìm được\Ntrong căn hộ của con trai mình.
Dialogue: 0,0:18:03.93,0:18:05.87,Default,,0,0,0,,Ngày tháng là vào bốn năm trước.
Dialogue: 0,0:18:06.17,0:18:07.03,Default,,0,0,0,,Thư à?
Dialogue: 0,0:18:08.04,0:18:09.50,Default,,0,0,0,,Tôi luôn chần chừ không dám gửi cho thầy.
Dialogue: 0,0:18:11.21,0:18:12.14,Default,,0,0,0,,["Huấn luyện viên Anzai,"]
Dialogue: 0,0:18:12.84,0:18:16.50,Default,,0,0,0,,["gần đây những lời thầy từng nói\Nthường xuyên xuất hiện trong đầu em."]
Dialogue: 0,0:18:17.04,0:18:21.31,Default,,0,0,0,,["Đội bóng không tồn tại vì em,\Nlà đội bóng cần em nên em mới ở đây."]
Dialogue: 0,0:18:21.75,0:18:24.53,Default,,0,0,0,,["Nơi này không có bất kỳ ai\Nchuyền bóng cho em cả."]
Dialogue: 0,0:18:26.25,0:18:28.75,Default,,0,0,0,,["Trước đây em đã gây nhiều phiền phức\Ncho huấn luyện viên và cả đồng đội,"]
Dialogue: 0,0:18:29.02,0:18:31.14,Default,,0,0,0,,["bây giờ em cũng không dám mặt dày trở về nữa."]
Dialogue: 0,0:18:31.39,0:18:32.79,Default,,0,0,0,,["Em định tiếp tục cố gắng"]
Dialogue: 0,0:18:32.95,0:18:35.86,Default,,0,0,0,,["cho đến một ngày kỹ năng chơi bóng của em\Nsẽ thể hiện rõ trước mặt mọi người."]
Dialogue: 0,0:18:40.26,0:18:42.06,Default,,0,0,0,,["Mỹ - Vương quốc của bóng rổ,"]
Dialogue: 0,0:18:42.70,0:18:47.47,Default,,0,0,0,,["những tưởng chỉ cần hít bầu không khí ở đây\Nthì sẽ một bước lên trời."]
Dialogue: 0,0:18:51.38,0:18:53.21,Default,,0,0,0,,[Năm ấy, huấn luyện viên Anzai,\Nngười thầy bóng rổ nổi tiếng]
Dialogue: 0,0:18:53.21,0:18:56.51,Default,,0,0,0,,[đã để lại danh hiệu Ác ma tóc trắng\Nvà rời khỏi giới bóng rổ trường đại học.]
Dialogue: 0,0:18:57.37,0:19:00.10,Default,,0,0,0,,[Vì ước mơ gửi gắm trên người Yazawa\Nluôn không thành]
Dialogue: 0,0:19:00.28,0:19:02.75,Default,,0,0,0,,[khiến huấn luyện viên Anzai vẫn không thể\Nđặt dấu chấm hết cho sự nghiệp bóng rổ của mình]
Dialogue: 0,0:19:02.75,0:19:03.88,Default,,0,0,0,,[đến tận ngày hôm nay.]
Dialogue: 0,0:19:10.45,0:19:12.44,Default,,0,0,0,,[Chẳng lẽ mình cũng giống như Yazawa?]
Dialogue: 0,0:19:34.31,0:19:36.83,Default,,0,0,0,,[Rukawa,\Ncậu cảm thấy con người Sakuragi thế nào?]
Dialogue: 0,0:19:37.17,0:19:43.16,Default,,0,0,0,,Huấn luyện viên của các cậu thường nhắc\Nvới tôi về chuyện của hai cậu với vẻ rất vui.
Dialogue: 0,0:19:43.31,0:19:47.22,Default,,0,0,0,,Ông ấy nói hai cậu có tài năng\Nmà ông ấy chưa từng nhìn thấy.
Dialogue: 0,0:19:47.95,0:19:51.91,Default,,0,0,0,,Tôi nghĩ chắc chắn ông ấy rất muốn được\Nnhìn thấy thêm những tiến bộ của các cậu.
Dialogue: 0,0:19:58.86,0:20:02.67,Default,,0,0,0,,Thầy làm gì vậy, Bố Già?\NThầy muốn dạy bảo Rukawa đúng không?
Dialogue: 0,0:20:02.74,0:20:03.63,Default,,0,0,0,,Đồ ngu.
Dialogue: 0,0:20:03.78,0:20:07.01,Default,,0,0,0,,Rukawa, tôi tin năng lực của cậu.
Dialogue: 0,0:20:08.75,0:20:11.74,Default,,0,0,0,,Cậu hãy trở thành học sinh cấp ba\Nsố một của Nhật Bản rồi tính tiếp nhé.
Dialogue: 0,0:20:13.74,0:20:16.09,Default,,0,0,0,,Sau này xin huấn luyện viên\Nchỉ bảo nhiều hơn.
Dialogue: 0,0:20:16.17,0:20:17.30,Default,,0,0,0,,Nghiêm khắc với em hơn.
Dialogue: 0,0:20:25.68,0:20:29.76,Default,,0,0,0,,[Học viện Daiei và trường cấp ba Toyotama\Nđại diện Osaka thi đấu.]
Dialogue: 0,0:20:29.88,0:20:35.01,Default,,0,0,0,,[Công nghiệp Meihou và học viện Aichi\Nđại diện cho tỉnh Aichi tham gia giải đấu toàn quốc.]
Dialogue: 0,0:20:36.31,0:20:39.25,Default,,0,0,0,,[Cứ thế, 59 đội bóng toàn quốc\Nđã chính thức được chọn ra.]
Dialogue: 0,0:20:40.86,0:20:43.72,Default,,0,0,0,,[Còn một tháng nữa là đến trận quyết chiến.]
Dialogue: 0,0:20:48.50,0:20:55.82,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:20:56.30,0:21:03.36,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:21:13.79,0:21:20.45,Default,,0,0,0,,♫ Từng một lòng muốn thực hiện\Nnhững ước mơ xưa cũ ♫
Dialogue: 0,0:21:21.11,0:21:25.67,Default,,0,0,0,,♫ Cho đến hôm nay vẫn chói mắt như thế ♫
Dialogue: 0,0:21:28.35,0:21:35.90,Default,,0,0,0,,♫ Cho dù tâm tình đầy sự bất an ♫
Dialogue: 0,0:21:36.02,0:21:40.01,Default,,0,0,0,,♫ Tôi vẫn vững tin\Nvới lựa chọn của chính mình ♫
Dialogue: 0,0:21:42.24,0:21:48.98,Default,,0,0,0,,♫ Thích vẻ mặt thuần khiết\Nkhông điểm trang gì của cậu ♫
Dialogue: 0,0:21:49.12,0:21:55.02,Default,,0,0,0,,♫ Nếu một ngày nó thay đổi,\Nsẽ làm người ta thấy đau lòng lắm ♫
Dialogue: 0,0:21:55.97,0:22:01.59,Default,,0,0,0,,♫ Thời niên thiếu đã từng luôn lấp lánh ♫
Dialogue: 0,0:22:01.68,0:22:04.12,Default,,0,0,0,,♫ Đôi mắt của cậu, hỡi bạn tôi ♫
Dialogue: 0,0:22:04.22,0:22:10.62,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:22:10.82,0:22:17.99,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:22:21.40,0:22:22.47,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:24.84,0:22:25.87,Default,,0,0,0,,Rukawa.
Dialogue: 0,0:22:26.02,0:22:29.60,Default,,0,0,0,,Đầu tiên cậu phải trở thành\Nhọc sinh cấp ba số một Nhật Bản đã.
Dialogue: 0,0:22:32.29,0:22:34.94,Default,,0,0,0,,Không có thực lực\Nthì đừng giả ngầu ở đây, Rukawa.
Dialogue: 0,0:22:35.40,0:22:38.15,Default,,0,0,0,,Có mục tiêu rõ ràng thì dễ rồi.
Dialogue: 0,0:22:38.23,0:22:39.36,Default,,0,0,0,,Bây giờ tôi xác nhận lại lần nữa.
Dialogue: 0,0:22:40.56,0:22:43.89,Default,,0,0,0,,Tuy tôi đã biết rồi,\Nnhưng vẫn phải xác nhận thêm một lần.
Dialogue: 0,0:22:44.00,0:22:46.26,Default,,0,0,0,,Tôi ghét tên khốn nạn đó nhất!
Dialogue: 0,0:22:46.73,0:22:47.90,Default,,0,0,0,,"Cao thủ bóng rổ."
Dialogue: 0,0:22:47.99,0:22:49.65,Default,,0,0,0,,"Khí thế đáng sợ của Rukawa!"
Dialogue: 0,0:22:49.78,0:22:51.12,Default,,0,0,0,,Chắc chắn phải xem đó.
