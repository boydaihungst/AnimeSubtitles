Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.55,0:00:20.57,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.75,0:00:24.00,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.67,0:00:30.19,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.42,0:00:36.46,Default,,0,0,0,,♫ Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.38,0:00:44.22,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.02,0:00:51.02,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.21,0:00:57.02,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.11,0:01:03.09,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.18,0:01:09.92,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.86,0:01:19.81,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:19.93,0:01:25.96,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.10,0:01:31.87,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:31.97,0:01:40.37,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:56.14,0:01:59.56,Default,,0,0,0,,[Đội bóng rổ Shohoku sắp bắt đầu hành trình\Nđến Hiroshima để tham gia giải đấu toàn quốc]
Dialogue: 0,0:01:59.74,0:02:02.06,Default,,0,0,0,,[đã bước vào giai đoạn\Nđiều chỉnh thể lực cuối cùng.]
Dialogue: 0,0:02:02.68,0:02:03.34,Default,,0,0,0,,[Ngoài ra,]
Dialogue: 0,0:02:03.47,0:02:06.87,Default,,0,0,0,,[Hikoichi của đội Ryonan đã đến gặp Uozumi.]
Dialogue: 0,0:02:07.13,0:02:09.63,Default,,0,0,0,,Tôi không còn lưu luyến gì bóng rổ nữa.
Dialogue: 0,0:02:13.44,0:02:16.25,Default,,0,0,0,,[Thái độ của Uozumi\Nđã làm Hikoichi chịu kích thích rất lớn.]
Dialogue: 0,0:02:16.40,0:02:19.16,Default,,0,0,0,,[Sau đó, Hikoichi\Ngặp được Fujima của Shoyo trên đường]
Dialogue: 0,0:02:19.33,0:02:21.56,Default,,0,0,0,,[cùng đến Shohoku để cổ vũ Shohoku.]
Dialogue: 0,0:02:26.60,0:02:31.92,Default,,0,0,0,,[Để thể hiện hiệu quả của việc tập huấn\N20 nghìn lần ném bóng mình đã đạt được]
Dialogue: 0,0:02:32.03,0:02:36.20,Default,,0,0,0,,[nên Hanamichi đã nghĩ mọi cách\Nđể tạo cơ hội khiêu chiến nhóm Fujima.]
Dialogue: 0,0:02:40.42,0:02:44.00,Default,,0,0,0,,[Hikoichi tìm kiếm khắp nơi\Nnhưng không tìm được Sendoh,]
Dialogue: 0,0:02:44.11,0:02:46.70,Default,,0,0,0,,[mà Uozumi\Nthì lại từ chối lời mời của Hikoichi.]
Dialogue: 0,0:02:48.20,0:02:50.53,Default,,0,0,0,,[Nhưng khi trập đấu sắp bắt đầu...]
Dialogue: 0,0:02:51.10,0:02:51.86,Default,,0,0,0,,Khoan đã.
Dialogue: 0,0:02:59.27,0:03:00.36,Default,,0,0,0,,Uozumi.
Dialogue: 0,0:03:00.51,0:03:02.81,Default,,0,0,0,,Ý chí chiến đấu của tôi vẫn chưa cháy hết đâu.
Dialogue: 0,0:03:03.92,0:03:04.50,Default,,0,0,0,,[Điều châm biếm là]
Dialogue: 0,0:03:04.59,0:03:06.39,Default,,0,0,0,,[Hanamichi bị thay ra làm thành viên dự bị.]
Dialogue: 0,0:03:06.62,0:03:09.72,Default,,0,0,0,,[Trận đấu trong số phận\Ncủa Uozumi và Akagi lại bắt đầu.]
Dialogue: 0,0:03:11.17,0:03:19.95,Default,,0,0,0,,[Trận đấu kịch liệt bắt đầu!\NShohoku đấu với Shoyo, Ryonan!]
Dialogue: 0,0:03:13.70,0:03:17.49,Default,,0,0,0,,[Trận đấu kịch liệt bắt đầu!\NShohoku đấu với Shoyo, Ryonan!]
Dialogue: 0,0:03:25.78,0:03:27.63,Default,,0,0,0,,Uozumi, Akagi nhờ cậu đấy.
Dialogue: 0,0:03:27.77,0:03:29.40,Default,,0,0,0,,Được, cứ để tôi lo.
Dialogue: 0,0:03:39.07,0:03:41.07,Default,,0,0,0,,- Mọi người chú ý, sắp bắt đầu rồi đấy.\N- Được.
Dialogue: 0,0:03:55.36,0:03:56.05,Default,,0,0,0,,Hanagata!
Dialogue: 0,0:04:00.50,0:04:01.26,Default,,0,0,0,,Mau về phòng thủ!
Dialogue: 0,0:04:02.70,0:04:04.55,Default,,0,0,0,,Cho bọn họ thấy\Ntấn công nhanh của Shohoku đi!
Dialogue: 0,0:04:11.11,0:04:12.76,Default,,0,0,0,,Rukawa, ném đẹp lắm!
Dialogue: 0,0:04:16.43,0:04:18.83,Default,,0,0,0,,Ngay từ đầu Rukawa đã thể hiện rất xuất sắc.
Dialogue: 0,0:04:19.00,0:04:20.69,Default,,0,0,0,,Đúng vậy, chẳng giống ai đó gì cả.
Dialogue: 0,0:04:23.30,0:04:26.43,Default,,0,0,0,,Cút cút cút.\NRukawa, mày cút qua một bên cho tao!
Dialogue: 0,0:04:27.49,0:04:28.36,Default,,0,0,0,,Đồ ngu.
Dialogue: 0,0:04:29.26,0:04:30.72,Default,,0,0,0,,Đừng để ý, đừng để ý,
Dialogue: 0,0:04:30.74,0:04:32.66,Default,,0,0,0,,tấn công vững vàng vào.
Dialogue: 0,0:04:40.64,0:04:41.75,Default,,0,0,0,,Là Fujima, chú ý.
Dialogue: 0,0:04:53.98,0:04:56.26,Default,,0,0,0,,[Chuyền đẹp lắm, không hổ là Fujima.]
Dialogue: 0,0:05:01.27,0:05:02.43,Default,,0,0,0,,Vào một quả nữa.
Dialogue: 0,0:05:09.94,0:05:11.51,Default,,0,0,0,,Rukawa, là vậy đó.
Dialogue: 0,0:05:11.98,0:05:12.90,Default,,0,0,0,,Làm tốt lắm.
Dialogue: 0,0:05:12.90,0:05:15.06,Default,,0,0,0,,Rukawa hôm nay ở trạng thài đỉnh cao chứ?
Dialogue: 0,0:05:20.78,0:05:23.26,Default,,0,0,0,,Thế nào, lớp 12 của Shoyo?
Dialogue: 0,0:05:23.37,0:05:25.57,Default,,0,0,0,,Chẳng phải lấy mục tiêu là\Nvòng loại giải đấu mùa đông à?
Dialogue: 0,0:05:26.11,0:05:27.04,Default,,0,0,0,,Bây giờ thì hay rồi,
Dialogue: 0,0:05:27.04,0:05:28.43,Default,,0,0,0,,đến lớp 10 của bọn tôi\Ncũng không thắng được thì sao mà được chứ.
Dialogue: 0,0:05:29.67,0:05:30.53,Default,,0,0,0,,Mitsui.
Dialogue: 0,0:05:30.94,0:05:32.65,Default,,0,0,0,,[Rukawa chết tiệt.]
Dialogue: 0,0:05:32.77,0:05:35.25,Default,,0,0,0,,[Đây vốn là lúc\Nmình phát huy thành quả huấn luyện]
Dialogue: 0,0:05:35.25,0:05:37.94,Default,,0,0,0,,[khi liên tục ghi hai quả liền.]
Dialogue: 0,0:05:38.89,0:05:41.59,Default,,0,0,0,,Bố Già, đổi người đi, đổi em lên.
Dialogue: 0,0:05:41.90,0:05:44.42,Default,,0,0,0,,Sakuragi, trận đấu mới bắt đầu thôi.
Dialogue: 0,0:05:44.63,0:05:46.07,Default,,0,0,0,,Vậy thì sao?
Dialogue: 0,0:05:46.20,0:05:47.39,Default,,0,0,0,,Em nhờ thầy nhanh cho em ra đi.
Dialogue: 0,0:05:48.37,0:05:52.00,Default,,0,0,0,,Sakuragi Hanamichi, cậu ngoan ngoãn\Nngồi cạnh làm đội cổ vũ đi, nghe chưa hả?
Dialogue: 0,0:05:52.84,0:05:54.24,Default,,0,0,0,,Chết tiệt.
Dialogue: 0,0:05:55.97,0:05:59.60,Default,,0,0,0,,Rukawa, Rukawa, mình yêu cậu!
Dialogue: 0,0:05:59.81,0:06:02.14,Default,,0,0,0,,Đội cổ vũ của Rukawa lại đến rồi.
Dialogue: 0,0:06:02.48,0:06:03.41,Default,,0,0,0,,Thật là.
Dialogue: 0,0:06:03.98,0:06:04.97,Default,,0,0,0,,Bọn họ chạy đến từ bao giờ vậy?
Dialogue: 0,0:06:05.13,0:06:08.52,Default,,0,0,0,,Lạ thật, bọn họ biết tin của trận đấu\Nở đâu ra vậy?
Dialogue: 0,0:06:08.95,0:06:12.27,Default,,0,0,0,,Chỉ cần là chuyện của Rukawa\Nthì tin tức của họ sẽ rất nhanh nhạy.
Dialogue: 0,0:06:14.44,0:06:15.50,Default,,0,0,0,,[Fujima của Shoyo]
Dialogue: 0,0:06:15.63,0:06:18.33,Default,,0,0,0,,[là hậu vệ khống chế bóng số một trong tỉnh\Ncùng Maki của Ryonan.]
Dialogue: 0,0:06:19.40,0:06:20.69,Default,,0,0,0,,[Mà Uozumi và Hanagata]
Dialogue: 0,0:06:21.39,0:06:26.27,Default,,0,0,0,,[cũng là trung phong hạng nhất\Ncó thực lực có thể vào được top ba trong tỉnh.]
Dialogue: 0,0:06:26.91,0:06:29.85,Default,,0,0,0,,[Chúng ta có ba thành viên cực kỳ giỏi,]
Dialogue: 0,0:06:29.98,0:06:33.63,Default,,0,0,0,,[lại thêm Hasegawa và Ikegami\Nđều là thành viên có khả năng,]
Dialogue: 0,0:06:34.17,0:06:36.28,Default,,0,0,0,,[theo lý thì có lẽ hai bên\Ncó thể đánh ngang tay.]
Dialogue: 0,0:06:37.01,0:06:39.69,Default,,0,0,0,,[Nhưng Shohoku\Nsắp đối mặt với giải đấu toàn quốc,]
Dialogue: 0,0:06:39.78,0:06:41.62,Default,,0,0,0,,[kỹ thuật và khí thế đều đạt đến điểm cao nhất.]
Dialogue: 0,0:06:42.11,0:06:45.28,Default,,0,0,0,,[Thế này thì đội bóng tập hợp tạm thời\Ncó rất nhiều chỗ không có lợi.]
Dialogue: 0,0:06:45.72,0:06:50.20,Default,,0,0,0,,[Chết tiệt, Shohoku\Nvẫn chưa cử vũ khí bí mấ Sakuragi ra.]
Dialogue: 0,0:06:53.02,0:06:56.43,Default,,0,0,0,,[Chết tiệt, chắng lẽ\Nkhông còn cách nào để nghĩ sao?]
Dialogue: 0,0:06:56.55,0:06:59.11,Default,,0,0,0,,[Mình phải nghĩ cách để ra sân mới được.]
Dialogue: 0,0:07:02.64,0:07:04.24,Default,,0,0,0,,Mitsui, cắt bóng đẹp lắm!
Dialogue: 0,0:07:04.24,0:07:05.35,Default,,0,0,0,,Tấn công!
Dialogue: 0,0:07:09.95,0:07:11.68,Default,,0,0,0,,Tốt lắm, không có ai phòng thủ.
Dialogue: 0,0:07:18.09,0:07:19.42,Default,,0,0,0,,Ném nghiêng người ra sau.
Dialogue: 0,0:07:21.73,0:07:23.84,Default,,0,0,0,,Đây là tuyệt chiêu ném bóng\NHanagata giỏi nhất.
Dialogue: 0,0:07:24.38,0:07:26.33,Default,,0,0,0,,Ném nghiêng người ra sau.
Dialogue: 0,0:07:26.42,0:07:28.35,Default,,0,0,0,,Vậy mà Rukawa lại có thể\Ndùng tuyệt chiêu của Hanagata
Dialogue: 0,0:07:28.50,0:07:32.36,Default,,0,0,0,,trước mặt Hanagata, Rukawa tuyệt quá.
Dialogue: 0,0:07:32.51,0:07:33.81,Default,,0,0,0,,Haruko, cậu vẫn ổn chứ?
Dialogue: 0,0:07:33.81,0:07:35.14,Default,,0,0,0,,Cậu phấn chấn lên đi.
Dialogue: 0,0:07:35.98,0:07:39.75,Default,,0,0,0,,Trận đấu cho đến lúc này,\Nsố điểm của Shohoku
Dialogue: 0,0:07:39.88,0:07:41.27,Default,,0,0,0,,đều do Rukawa ghi được, tuyệt quá.
Dialogue: 0,0:07:41.38,0:07:43.46,Default,,0,0,0,,Trận đấu mới bắt đầu đã dùng toàn lực.
Dialogue: 0,0:07:43.61,0:07:45.46,Default,,0,0,0,,Có vẻ vấn đề thể lực trước đây luôn lo lắng
Dialogue: 0,0:07:45.56,0:07:47.80,Default,,0,0,0,,đã lấy lại sự tự tin\Nsau buổi tập huấn tập trung mùa hè.
Dialogue: 0,0:07:47.92,0:07:49.79,Default,,0,0,0,,Trong thời gian ngắn ngủi như vậy,
Dialogue: 0,0:07:50.20,0:07:53.79,Default,,0,0,0,,Rukawa đúng là có tiến bộ rất lớn.
Dialogue: 0,0:07:54.45,0:07:57.98,Default,,0,0,0,,Cậu ấy lại bước thêm một bước\Nđến mục tiêu học sinh cấp ba số một Nhật Bản.
Dialogue: 0,0:07:58.29,0:08:00.38,Default,,0,0,0,,Không, không có gì.
Dialogue: 0,0:08:04.20,0:08:05.69,Default,,0,0,0,,[Tên khốn Rukawa đó,]
Dialogue: 0,0:08:05.82,0:08:09.72,Default,,0,0,0,,[vậy mà kỹ thuật còn tốt hơn\Nkhi thi đấu với mình lúc trước nữa.]
Dialogue: 0,0:08:30.36,0:08:33.71,Default,,0,0,0,,[Chết tiệt. Rukawa, dù mày tiến bộ bao nhiêu]
Dialogue: 0,0:08:33.85,0:08:36.52,Default,,0,0,0,,[thì thiên tài Sakuragi tao\Nchắc chắn sẽ không thua mày.]
Dialogue: 0,0:08:37.67,0:08:39.22,Default,,0,0,0,,Mấy ngươi làm sao vậy hả?
Dialogue: 0,0:08:40.94,0:08:44.00,Default,,0,0,0,,Chẳng phải chúng ta đã nói là\Nphải làm Shohoku bất ngờ sao?
Dialogue: 0,0:08:45.51,0:08:48.53,Default,,0,0,0,,Tôi không muốn lại thua Shohoku đâu.
Dialogue: 0,0:08:48.74,0:08:50.80,Default,,0,0,0,,Bây giờ phải cho bọn họ thấy\Ný chí của chúng ta.
Dialogue: 0,0:08:51.25,0:08:53.41,Default,,0,0,0,,Uozumi, Ikegami.
Dialogue: 0,0:08:59.99,0:09:02.52,Default,,0,0,0,,Nói đúng lắm, Fujima,\Nchúng ta không thể thua được.
Dialogue: 0,0:09:03.48,0:09:05.87,Default,,0,0,0,,Được lắm, đến đây đi, Shohoku.
Dialogue: 0,0:09:06.48,0:09:07.21,Default,,0,0,0,,Cố lên!
Dialogue: 0,0:09:11.65,0:09:13.92,Default,,0,0,0,,[Người có thể ngăn cản Rukawa\Nđang ở trong trạng thái tốt nhất]
Dialogue: 0,0:09:14.02,0:09:15.22,Default,,0,0,0,,[chỉ có Sendoh.]
Dialogue: 0,0:09:15.62,0:09:17.42,Default,,0,0,0,,[Mà nếu Fukuda cũng đến...]
Dialogue: 0,0:09:17.99,0:09:19.57,Default,,0,0,0,,[Cuối cùng thì chị đang làm gì vậy?]
Dialogue: 0,0:09:20.93,0:09:22.69,Default,,0,0,0,,Chị biết rồi, Hikoichi.
Dialogue: 0,0:09:22.93,0:09:26.16,Default,,0,0,0,,Chị cũng đang cố gắng tìm Sendoh đây,\Nem đừng có hối chị, được không hả?
Dialogue: 0,0:09:26.21,0:09:27.33,Default,,0,0,0,,Chị chậm quá đấy.
Dialogue: 0,0:09:27.33,0:09:29.06,Default,,0,0,0,,Nếu như vậy thì\Ntrận đấu cũng sắp kết thúc luôn.
Dialogue: 0,0:09:29.17,0:09:30.49,Default,,0,0,0,,Dù thế nào đi nữa
Dialogue: 0,0:09:30.63,0:09:33.60,Default,,0,0,0,,thì chị cũng phải tìm được anh ấy trước khi\Ntrận đấu kết thúc đó, biết chưa chị?
Dialogue: 0,0:09:34.72,0:09:35.85,Default,,0,0,0,,Nói lớn như vậy làm gì chứ.
Dialogue: 0,0:09:36.53,0:09:39.05,Default,,0,0,0,,Nhiều chỗ câu cá như vậy, rốt cuộc là ở đâu?
Dialogue: 0,0:09:40.06,0:09:41.05,Default,,0,0,0,,Dừng xe.
Dialogue: 0,0:09:54.39,0:09:56.59,Default,,0,0,0,,Tốt lắm, bắt đầu phản công!
Dialogue: 0,0:09:59.26,0:10:00.32,Default,,0,0,0,,Sendoh!
Dialogue: 0,0:10:01.36,0:10:03.70,Default,,0,0,0,,Tốt quá, cuối cùng cũng tìm được cậu.
Dialogue: 0,0:10:03.88,0:10:08.48,Default,,0,0,0,,Xin lỗi nhé, tôi là người của\Nbộ phận biên tập tạp chí "Tuần san bóng rổ",
Dialogue: 0,0:10:08.58,0:10:10.85,Default,,0,0,0,,nói đơn giản thì là chị của Hikoichi.
Dialogue: 0,0:10:11.07,0:10:11.74,Default,,0,0,0,,Chị của Hikoichi?
Dialogue: 0,0:10:11.74,0:10:13.40,Default,,0,0,0,,Tóm lại thì cậu nhanh lên,
Dialogue: 0,0:10:13.50,0:10:15.29,Default,,0,0,0,,tôi sẽ cho cậu biết tình hình cụ thể trên xe,
Dialogue: 0,0:10:15.46,0:10:16.45,Default,,0,0,0,,cậu nhanh đi theo tôi.
Dialogue: 0,0:10:17.55,0:10:18.38,Default,,0,0,0,,Khoan đã.
Dialogue: 0,0:10:18.38,0:10:20.01,Default,,0,0,0,,Mấy thứ này\Ntôi cầm cho cậu, nhanh lên, nhanh lên.
Dialogue: 0,0:10:20.55,0:10:21.78,Default,,0,0,0,,Làm gì vậy?
Dialogue: 0,0:11:25.70,0:11:30.69,Default,,0,0,0,,[Chết tiệt, cuối cùng thì làm thế nào\Nmới có thể ra sân?]
Dialogue: 0,0:11:33.43,0:11:35.49,Default,,0,0,0,,[Không qua tôi được đâu.]
Dialogue: 0,0:11:38.42,0:11:39.35,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:11:43.04,0:11:44.51,Default,,0,0,0,,Đến đây đi, Uozumi.
Dialogue: 0,0:11:46.79,0:11:47.45,Default,,0,0,0,,Fujima.
Dialogue: 0,0:11:55.34,0:11:57.64,Default,,0,0,0,,Vào rồi! Không hổ là Fujima.
Dialogue: 0,0:11:57.83,0:11:58.89,Default,,0,0,0,,Fujima, làm tốt lắm!
Dialogue: 0,0:12:00.40,0:12:01.56,Default,,0,0,0,,Mọi người thừa thắng xông lên.
Dialogue: 0,0:12:05.76,0:12:08.16,Default,,0,0,0,,Cuối cùng chúng ta cũng vào trạng thái..
Dialogue: 0,0:12:08.52,0:12:10.27,Default,,0,0,0,,Mọi người, phòng thủ, phòng thủ.
Dialogue: 0,0:12:10.36,0:12:12.62,Default,,0,0,0,,Chúng ta phải lấy lại quả ban nãy.
Dialogue: 0,0:12:16.87,0:12:19.55,Default,,0,0,0,,[Hừ, số 5 cản trở quá.]
Dialogue: 0,0:12:20.28,0:12:20.81,Default,,0,0,0,,Miyagi!
Dialogue: 0,0:12:34.30,0:12:35.16,Default,,0,0,0,,[Đừng hòng ra tay!]
Dialogue: 0,0:12:41.40,0:12:44.57,Default,,0,0,0,,Uozumi, tuyệt lắm, quá đẹp!
Dialogue: 0,0:12:44.81,0:12:48.54,Default,,0,0,0,,Đừng để ý, đừng để ý.\NTấn công, tấn công, mau tấn công.
Dialogue: 0,0:12:48.84,0:12:52.41,Default,,0,0,0,,Tuyển thủ của Shoyo và Ryonan\Nđã dần có được sự ăn ý.
Dialogue: 0,0:12:53.32,0:12:55.22,Default,,0,0,0,,Tốt lắm. Akagi, đến đây đi.
Dialogue: 0,0:13:01.88,0:13:02.94,Default,,0,0,0,,Làm tốt lắm, Uozumi.
Dialogue: 0,0:13:04.65,0:13:07.38,Default,,0,0,0,,[Động tác của Uozumi\Ncũng càng lúc càng linh hoạt hơn.]
Dialogue: 0,0:13:18.34,0:13:19.33,Default,,0,0,0,,[Lại là Uozumi.]
Dialogue: 0,0:13:23.17,0:13:24.23,Default,,0,0,0,,[Bóng ba điểm.]
Dialogue: 0,0:13:28.77,0:13:31.47,Default,,0,0,0,,Tốt lắm, Fujima ném rất đẹp!
Dialogue: 0,0:13:31.61,0:13:34.18,Default,,0,0,0,,Rút ngắn ba điểm liền.
Dialogue: 0,0:13:37.99,0:13:40.69,Default,,0,0,0,,[Cậu ta không chỉ có khả năng ném bóng]
Dialogue: 0,0:13:40.81,0:13:42.97,Default,,0,0,0,,[mà còn có cả bản lĩnh\Ndẫn dắt toàn đội phát huy thực lực]
Dialogue: 0,0:13:43.05,0:13:46.02,Default,,0,0,0,,[và khả năng phán đoán chuyền bóng kịp lúc.]
Dialogue: 0,0:13:46.19,0:13:48.05,Default,,0,0,0,,[Fujima đúng là quá đáng sợ.]
Dialogue: 0,0:13:49.27,0:13:52.14,Default,,0,0,0,,[Không, đáng sợ hơn cả là]
Dialogue: 0,0:13:52.27,0:13:56.40,Default,,0,0,0,,[đội bóng được tạo nên bất ngờ này\Nđã có thể hoàn toàn hợp lại với nhau.]
Dialogue: 0,0:13:57.15,0:13:59.51,Default,,0,0,0,,[Đây là chỗ đáng sợ thật sự của Fujima,]
Dialogue: 0,0:13:59.65,0:14:02.28,Default,,0,0,0,,[huấn luyện viên học sinh của Shoyo.]
Dialogue: 0,0:14:03.58,0:14:04.41,Default,,0,0,0,,Đừng để ý.
Dialogue: 0,0:14:04.64,0:14:06.81,Default,,0,0,0,,- Tấn công, tấn công!\N- Cố lên!
Dialogue: 0,0:14:08.41,0:14:12.14,Default,,0,0,0,,Sakuragi, cậu cũng cùng cổ vũ bọn họ đi,
Dialogue: 0,0:14:12.61,0:14:14.83,Default,,0,0,0,,sao lại nhăn mày nhăn mặt ngồi đó vậy?
Dialogue: 0,0:14:15.78,0:14:17.14,Default,,0,0,0,,Đúng đó, Sakuragi Hanamichi.
Dialogue: 0,0:14:17.14,0:14:18.44,Default,,0,0,0,,Lạ thật đấy,
Dialogue: 0,0:14:18.49,0:14:20.08,Default,,0,0,0,,sao cậu lại trở nên ngoan ngoãn như vậy?
Dialogue: 0,0:14:20.91,0:14:22.04,Default,,0,0,0,,Em đang suy nghĩ.
Dialogue: 0,0:14:22.28,0:14:23.88,Default,,0,0,0,,Trận đấu nhỏ ở mức này
Dialogue: 0,0:14:23.88,0:14:25.15,Default,,0,0,0,,thì không cần cho\Nthiên tài Sakuragi em ra sân.
Dialogue: 0,0:14:25.28,0:14:27.38,Default,,0,0,0,,Niềm vui lớn nhất phải để đến cuối cùng,
Dialogue: 0,0:14:27.40,0:14:28.68,Default,,0,0,0,,giữ lại đến giải đấu toàn quốc.
Dialogue: 0,0:14:29.91,0:14:30.74,Default,,0,0,0,,Nó đang cười.
Dialogue: 0,0:14:31.04,0:14:32.04,Default,,0,0,0,,Thật.
Dialogue: 0,0:14:32.18,0:14:34.44,Default,,0,0,0,,Tính của thằng Hanamichi đó là kiểu\Nkhông chịu thua nhất.
Dialogue: 0,0:14:34.54,0:14:35.67,Default,,0,0,0,,Thật hết cách với nó.
Dialogue: 0,0:14:38.42,0:14:43.97,Default,,0,0,0,,Rukawa, Rukawa, mình yêu cậu, Rukawa!
Dialogue: 0,0:14:44.80,0:14:46.01,Default,,0,0,0,,Được rồi, chú ý.
Dialogue: 0,0:14:46.21,0:14:48.67,Default,,0,0,0,,[Đối mặt với hai trung phong mạnh nhất\Ncủa tỉnh Kanagawa,]
Dialogue: 0,0:14:48.91,0:14:50.88,Default,,0,0,0,,[Rukawa có giỏi đến mức nào\Ncũng không thắng được.]
Dialogue: 0,0:14:51.44,0:14:52.54,Default,,0,0,0,,Rukawa, chuyền bóng.
Dialogue: 0,0:14:53.61,0:14:54.58,Default,,0,0,0,,[Cái tên này.]
Dialogue: 0,0:15:03.29,0:15:06.28,Default,,0,0,0,,Rukawa, Rukawa!
Dialogue: 0,0:15:06.42,0:15:08.41,Default,,0,0,0,,Tuyệt lắm, Rukawa!
Dialogue: 0,0:15:08.63,0:15:09.75,Default,,0,0,0,,Không hổ là Rukawa,
Dialogue: 0,0:15:10.06,0:15:13.88,Default,,0,0,0,,gặp phải sự phòng thủ của hai trung phong\Nsiêu mạnh như Uozumi và Hanagata
Dialogue: 0,0:15:14.01,0:15:15.30,Default,,0,0,0,,mà vẫn không nhường một bước.
Dialogue: 0,0:15:16.07,0:15:17.91,Default,,0,0,0,,Chỉ có người ngoài ngành mới chơi nổi
Dialogue: 0,0:15:18.02,0:15:19.95,Default,,0,0,0,,ở trận đấu quy mô nhỏ như thế này.
Dialogue: 0,0:15:21.55,0:15:23.79,Default,,0,0,0,,[Rukawa chết tiệt.]
Dialogue: 0,0:15:23.86,0:15:25.59,Default,,0,0,0,,[Sao có thể để mày chơi nổi mãi được chứ.]
Dialogue: 0,0:15:25.79,0:15:28.73,Default,,0,0,0,,[Dù thế nào thì mình cũng phải ra sân mới được.]
Dialogue: 0,0:15:29.56,0:15:31.93,Default,,0,0,0,,Anh Bốn Mắt, anh ngã có sao không?
Dialogue: 0,0:15:32.20,0:15:33.33,Default,,0,0,0,,Tôi không sao đâu, Sakuragi.
Dialogue: 0,0:15:33.76,0:15:35.16,Default,,0,0,0,,Ban nãy tôi chỉ trơn quá nên ngã thôi.
Dialogue: 0,0:15:37.25,0:15:39.57,Default,,0,0,0,,Thôi tiêu rồi, anh bị thương nặng quá!
Dialogue: 0,0:15:39.71,0:15:42.03,Default,,0,0,0,,Anh Bốn Mắt, anh đừng miễn cưỡng mình quá.\NBố Già!
Dialogue: 0,0:15:44.28,0:15:48.02,Default,,0,0,0,,Thay người đi, Sakuragi ra sân thay Kogure.
Dialogue: 0,0:15:48.65,0:15:49.70,Default,,0,0,0,,Được.
Dialogue: 0,0:15:51.13,0:15:52.66,Default,,0,0,0,,Sakuragi, cậu...
Dialogue: 0,0:15:53.13,0:15:54.71,Default,,0,0,0,,Anh Bốn Mắt, anh yên tâm đi,
Dialogue: 0,0:15:54.84,0:15:57.15,Default,,0,0,0,,còn lại cứ giao cho\NSakuragi Hanamichi này là được.
Dialogue: 0,0:15:57.22,0:15:59.26,Default,,0,0,0,,Anh cứ ở đó từ từ dưỡng thương.
Dialogue: 0,0:16:02.40,0:16:04.86,Default,,0,0,0,,Có vẻ xương không bị gì bất thường.
Dialogue: 0,0:16:05.07,0:16:06.59,Default,,0,0,0,,Tôi không có gì phải lo lắng cả.
Dialogue: 0,0:16:06.87,0:16:10.88,Default,,0,0,0,,Thật ra chỗ bị Sakuragi nhéo\Ncòn đau hơn vết thương do ngã nữa.
Dialogue: 0,0:16:12.61,0:16:13.96,Default,,0,0,0,,Cái thằng khốn Sakuragi đó,
Dialogue: 0,0:16:14.05,0:16:15.88,Default,,0,0,0,,vậy mà lại dùng thủ đoạn không hay này.
Dialogue: 0,0:16:16.93,0:16:18.36,Default,,0,0,0,,Không sao,
Dialogue: 0,0:16:18.63,0:16:21.74,Default,,0,0,0,,chúng ta hãy quan sát cẩn thận\Nbiểu hiện của Sakuragi.
Dialogue: 0,0:16:24.29,0:16:26.14,Default,,0,0,0,,[Anh Bốn Mắt, đừng có trách em,]
Dialogue: 0,0:16:26.25,0:16:28.65,Default,,0,0,0,,[em làm vậy cũng chỉ để\Nđánh bại tên Rukawa đó.]
Dialogue: 0,0:16:29.49,0:16:31.91,Default,,0,0,0,,Hanamichi đã ra sân.
Dialogue: 0,0:16:32.04,0:16:35.30,Default,,0,0,0,,Cuối cùng cũng có thể thấy\Nthành quả tập huấn của nó.
Dialogue: 0,0:16:35.44,0:16:37.43,Default,,0,0,0,,Chúng ta cũng vất vả không thua gì nó đâu.
Dialogue: 0,0:16:37.80,0:16:39.30,Default,,0,0,0,,Hanamichi, trông vào mày đó.
Dialogue: 0,0:16:40.55,0:16:42.25,Default,,0,0,0,,Đến đây đi.
Dialogue: 0,0:16:42.59,0:16:44.61,Default,,0,0,0,,Tên đó cứ giao cho tôi kèm.
Dialogue: 0,0:16:45.74,0:16:48.73,Default,,0,0,0,,Cuối cùng Sakuragi cũng ra sân.
Dialogue: 0,0:16:49.88,0:16:50.92,Default,,0,0,0,,[Hãy đợi đấy, Rukawa.]
Dialogue: 0,0:16:51.03,0:16:52.80,Default,,0,0,0,,[Sau khi thấy tuyệt chiêu tất sát của tao]
Dialogue: 0,0:16:52.87,0:16:54.80,Default,,0,0,0,,[thì đừng có sợ đến nỗi đau lưng.]
Dialogue: 0,0:16:56.50,0:16:57.94,Default,,0,0,0,,Ryota, chuyền bên này, bên này, bên này!
Dialogue: 0,0:16:58.24,0:16:59.83,Default,,0,0,0,,[Hanamichi.]
Dialogue: 0,0:17:01.24,0:17:02.23,Default,,0,0,0,,Nhanh quá vậy.
Dialogue: 0,0:17:02.41,0:17:03.20,Default,,0,0,0,,Cơ hội tốt!
Dialogue: 0,0:17:03.71,0:17:05.18,Default,,0,0,0,,Sakuragi, tuyệt quá!
Dialogue: 0,0:17:06.33,0:17:07.41,Default,,0,0,0,,[Sakuragi,]
Dialogue: 0,0:17:07.50,0:17:08.73,Default,,0,0,0,,[tôi chắc chắn sẽ không để cậu qua.]
Dialogue: 0,0:17:12.89,0:17:14.29,Default,,0,0,0,,[Chẳng lẽ Sakuragi muốn...]
Dialogue: 0,0:17:14.59,0:17:16.03,Default,,0,0,0,,[Ném bóng xa như vậy sao?]
Dialogue: 0,0:17:16.33,0:17:17.29,Default,,0,0,0,,[Hanamichi.]
Dialogue: 0,0:17:17.63,0:17:19.16,Default,,0,0,0,,[Tên này...]
Dialogue: 0,0:17:19.47,0:17:23.42,Default,,0,0,0,,Tất sát, ném bóng huấn luyện bí mật, lên nào!
Dialogue: 0,0:17:42.89,0:17:45.80,Default,,0,0,0,,Cuối cùng thì tuần này chúng ta đã làm gì vậy?
Dialogue: 0,0:17:45.91,0:17:49.41,Default,,0,0,0,,Cố gắng của chúng ta\Ntrôi theo dòng nước mắt rồi.
Dialogue: 0,0:17:49.98,0:17:53.04,Default,,0,0,0,,Trả tuổi xuân lại cho bọn tao!
Dialogue: 0,0:17:54.76,0:17:58.89,Default,,0,0,0,,Không ngờ chúng ta lại thua thằng ngu đó\Ntrong vòng loại.
Dialogue: 0,0:17:59.57,0:18:00.69,Default,,0,0,0,,Mất mặt quá.
Dialogue: 0,0:18:02.04,0:18:03.41,Default,,0,0,0,,[Thôi xong.]
Dialogue: 0,0:18:03.91,0:18:06.04,Default,,0,0,0,,Không phải, cái này là...
Dialogue: 0,0:18:06.14,0:18:07.80,Default,,0,0,0,,Cậu nói gì không phải hả?
Dialogue: 0,0:18:08.04,0:18:09.34,Default,,0,0,0,,Đồ ngu.
Dialogue: 0,0:18:10.11,0:18:13.27,Default,,0,0,0,,Không phải, không nên là như vậy.
Dialogue: 0,0:18:14.28,0:18:16.04,Default,,0,0,0,,[Tập huấn ném bóng của Sakuragi à?]
Dialogue: 0,0:18:16.33,0:18:17.71,Default,,0,0,0,,[Chắc là phải ghi lại.]
Dialogue: 0,0:18:23.49,0:18:26.39,Default,,0,0,0,,[Ryochin, chuyển cho tôi,\Ntôi chắc chắn sẽ ném vào cho mà xem.]
Dialogue: 0,0:18:26.50,0:18:28.66,Default,,0,0,0,,[Bớt càm ràm đi Hanamichi,\Ntôi không bị cậu lừa nữa đâu!]
Dialogue: 0,0:18:28.75,0:18:31.08,Default,,0,0,0,,[Mitchi, ném cho tôi, ném cho tôi.]
Dialogue: 0,0:18:31.08,0:18:31.70,Default,,0,0,0,,[Bớt càm ràm đi.]
Dialogue: 0,0:18:31.70,0:18:33.00,Default,,0,0,0,,[Lại chuyền cho Rukawa!]
Dialogue: 0,0:18:36.66,0:18:37.58,Default,,0,0,0,,Hanamichi,
Dialogue: 0,0:18:37.64,0:18:39.91,Default,,0,0,0,,như ban nãy mới gọi là nhảy, ném bóng.
Dialogue: 0,0:18:40.18,0:18:42.87,Default,,0,0,0,,Sakuragi, lần sau không cho phá nữa,\Nnghe chưa hả?
Dialogue: 0,0:18:47.92,0:18:50.85,Default,,0,0,0,,[Chết tiệt, khoảng cách lại bị kéo dãn.]
Dialogue: 0,0:18:50.98,0:18:52.42,Default,,0,0,0,,[Cuối cùng thì chị đã làm được chưa?]
Dialogue: 0,0:18:52.53,0:18:55.43,Default,,0,0,0,,[Mau đưa Sendoh với Fukuda đến đi, không thì...]
Dialogue: 0,0:18:57.26,0:18:58.19,Default,,0,0,0,,Sendoh, nhanh lên!
Dialogue: 0,0:18:58.28,0:18:59.20,Default,,0,0,0,,Chị!
Dialogue: 0,0:18:59.89,0:19:02.51,Default,,0,0,0,,Tốt quá, Sendoh đến rồi!
Dialogue: 0,0:19:02.62,0:19:03.82,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:19:04.32,0:19:05.71,Default,,0,0,0,,Sendoh, cậu đến rồi.
Dialogue: 0,0:19:07.66,0:19:09.71,Default,,0,0,0,,Fujima, thay tôi ra.
Dialogue: 0,0:19:09.79,0:19:12.14,Default,,0,0,0,,Chỉ có Sendoh mới có thể đối đầu với Rukawa.
Dialogue: 0,0:19:12.25,0:19:12.95,Default,,0,0,0,,Được.
Dialogue: 0,0:19:13.62,0:19:16.42,Default,,0,0,0,,Sendoh, không còn thời gian khởi động đâu.
Dialogue: 0,0:19:16.51,0:19:17.70,Default,,0,0,0,,Không thành vấn đề.
Dialogue: 0,0:19:17.83,0:19:19.32,Default,,0,0,0,,Được rồi, mau thay đồ đi.
Dialogue: 0,0:19:20.97,0:19:23.38,Default,,0,0,0,,Không ngờ lại có\Ncơ hội chơi bóng cùng Sendoh.
Dialogue: 0,0:19:23.77,0:19:25.86,Default,,0,0,0,,Trận đấu này càng lúc càng thú vị.
Dialogue: 0,0:19:26.60,0:19:27.58,Default,,0,0,0,,Sendoh sao?
Dialogue: 0,0:19:27.90,0:19:30.20,Default,,0,0,0,,Cậu ta với Fujima,\Nai mới là hậu vệ khống chế bóng thật sự?
Dialogue: 0,0:19:30.47,0:19:31.36,Default,,0,0,0,,Dù sao thì kiểu gì
Dialogue: 0,0:19:31.57,0:19:33.66,Default,,0,0,0,,người phụ trách phòng thủ Sendoh\Ncũng là Rukawa.
Dialogue: 0,0:19:37.07,0:19:39.88,Default,,0,0,0,,Chị à, cảm ơn chị nhé, chị đáng tin thật.
Dialogue: 0,0:19:40.07,0:19:41.53,Default,,0,0,0,,Đương nhiên rồi, thằng em ngốc này,\Nchuyện này chị làm tốt nhất đấy.
Dialogue: 0,0:19:42.34,0:19:45.67,Default,,0,0,0,,Nhưng Hikoichi này,\Ntrước khi Shohoku đến Hiroshima thi đấu,
Dialogue: 0,0:19:45.80,0:19:48.78,Default,,0,0,0,,chúng ta lại có một vở kịch hay để xem.
Dialogue: 0,0:19:48.89,0:19:53.71,Default,,0,0,0,,Phải. Chúng ta có Uozumi của Ryonan,\NFujima của Shoyo,
Dialogue: 0,0:19:53.84,0:19:55.53,Default,,0,0,0,,cả Sendoh nữa.
Dialogue: 0,0:19:55.62,0:19:59.41,Default,,0,0,0,,Nói là đội bóng mạnh nhất Kanagawa\Ncũng không quá đâu.
Dialogue: 0,0:20:00.03,0:20:01.36,Default,,0,0,0,,Sendoh ra rồi.
Dialogue: 0,0:20:08.33,0:20:09.69,Default,,0,0,0,,Sendoh, trông vào cậu đấy.
Dialogue: 0,0:20:09.99,0:20:12.22,Default,,0,0,0,,Được, em sẽ cố gắng.
Dialogue: 0,0:20:19.83,0:20:20.92,Default,,0,0,0,,Được rồi, mọi người lên nào.
Dialogue: 0,0:20:33.68,0:20:35.37,Default,,0,0,0,,[Chết tiệt.]
Dialogue: 0,0:20:35.55,0:20:37.01,Default,,0,0,0,,[Mình sẽ không chùn bước như thế này đâu.]
Dialogue: 0,0:20:37.22,0:20:39.51,Default,,0,0,0,,[Chắc chắn mình phải cho mọi người biết\Nkhả năng của mình mạnh đến mức nào.]
Dialogue: 0,0:20:39.67,0:20:42.54,Default,,0,0,0,,[Lát nữa tôi sẽ xử lý cả hai người,]
Dialogue: 0,0:20:42.81,0:20:44.90,Default,,0,0,0,,[Rukawa và Sendoh.]
Dialogue: 0,0:20:48.61,0:20:55.93,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:20:56.41,0:21:03.47,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:21:13.90,0:21:20.56,Default,,0,0,0,,♫ Từng một lòng muốn thực hiện\Nnhững ước mơ xưa cũ ♫
Dialogue: 0,0:21:21.22,0:21:25.78,Default,,0,0,0,,♫ Cho đến hôm nay vẫn chói mắt như thế ♫
Dialogue: 0,0:21:28.46,0:21:36.01,Default,,0,0,0,,♫ Cho dù tâm tình đầy sự bất an ♫
Dialogue: 0,0:21:36.13,0:21:40.12,Default,,0,0,0,,♫ Tôi vẫn vững tin\Nvới lựa chọn của chính mình ♫
Dialogue: 0,0:21:42.35,0:21:49.09,Default,,0,0,0,,♫ Thích vẻ mặt thuần khiết\Nkhông điểm trang gì của cậu ♫
Dialogue: 0,0:21:49.23,0:21:55.13,Default,,0,0,0,,♫ Nếu một ngày nó thay đổi,\Nsẽ làm người ta thấy đau lòng lắm ♫
Dialogue: 0,0:21:56.08,0:22:01.70,Default,,0,0,0,,♫ Thời niên thiếu đã từng luôn lấp lánh ♫
Dialogue: 0,0:22:01.79,0:22:04.23,Default,,0,0,0,,♫ Đôi mắt của cậu, hỡi bạn tôi ♫
Dialogue: 0,0:22:04.53,0:22:10.89,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:22:11.14,0:22:19.31,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:22:21.53,0:22:22.60,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:24.47,0:22:26.80,Default,,0,0,0,,Tôi chắc chắn sẽ không thua\NSendoh, Rukawa và Fukuda.
Dialogue: 0,0:22:26.95,0:22:29.90,Default,,0,0,0,,Như vậy thì chỉ có thể trông cậy vào\Nchiêu tất sát tập huấn ném bóng.
Dialogue: 0,0:22:29.99,0:22:31.25,Default,,0,0,0,,Mình không tin cả ba lần đều không vào.
Dialogue: 0,0:22:31.35,0:22:33.25,Default,,0,0,0,,- Chiêu tất sát tập huấn ném bóng!\N- Lỗi chạy bước.
Dialogue: 0,0:22:33.42,0:22:37.17,Default,,0,0,0,,Yasu, mắt của anh không tốt à?\NChẳng lẽ có thù oán với tôi sao?
Dialogue: 0,0:22:37.17,0:22:39.46,Default,,0,0,0,,Nhưng đúng là lỗi chạy bước mà.
Dialogue: 0,0:22:39.58,0:22:41.09,Default,,0,0,0,,Cái tên này, cuối cùng thì là đầu nào vậy?
Dialogue: 0,0:22:41.18,0:22:42.21,Default,,0,0,0,,Anh là thành viên của Shohoku nhỉ?
Dialogue: 0,0:22:42.30,0:22:43.56,Default,,0,0,0,,Vậy thì phải nghĩ cách qua loa cho xong chứ.
Dialogue: 0,0:22:43.67,0:22:44.93,Default,,0,0,0,,"Cao thủ bóng rổ."
Dialogue: 0,0:22:44.95,0:22:47.75,Default,,0,0,0,,"Nguy cơ của Shohoku!\NQuân đoàn mạnh nhất có tính đe dọa nhất."
Dialogue: 0,0:22:47.85,0:22:49.17,Default,,0,0,0,,Đừng bỏ qua đấy.
