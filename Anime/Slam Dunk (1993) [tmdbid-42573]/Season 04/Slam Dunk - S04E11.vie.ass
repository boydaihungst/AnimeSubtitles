Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.46,0:00:20.48,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.79,0:00:24.04,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.79,0:00:30.31,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.54,0:00:36.58,Default,,0,0,0,,♫ Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.50,0:00:44.34,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.14,0:00:51.14,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.33,0:00:57.14,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.23,0:01:03.21,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.30,0:01:10.04,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.98,0:01:19.93,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:20.05,0:01:26.08,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.22,0:01:31.99,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:32.09,0:01:40.49,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:55.42,0:01:56.43,Default,,0,0,0,,[Hikoichi của đội Ryonan\Ntrên đường về quê thăm bạn,]
Dialogue: 0,0:01:56.58,0:01:58.55,Default,,0,0,0,,[thuận đường đến tham quan hội trường Osaka.]
Dialogue: 0,0:01:58.66,0:02:00.48,Default,,0,0,0,,[Vòng chung kết cuối cùng\Ncủa trận tuyển chọn giữa các trường cấp ba.]
Dialogue: 0,0:02:00.58,0:02:01.70,Default,,0,0,0,,[Trong chuyến du lịch này,]
Dialogue: 0,0:02:01.84,0:02:03.67,Default,,0,0,0,,[Cầu thủ chủ lực Kishimoto của đội cấp ba\NToyotama có lời sỉ nhục Sendoh.]
Dialogue: 0,0:02:03.76,0:02:05.29,Default,,0,0,0,,[Làm cho Hikoichi vô cùng tức giận.]
Dialogue: 0,0:02:05.40,0:02:09.26,Default,,0,0,0,,[Quyết tâm điều tra chi tiết\Ntình hình để đánh bại Toyotama.]
Dialogue: 0,0:02:10.08,0:02:13.27,Default,,0,0,0,,[Trường cấp ba Toyotama chết tiệt,\Nkhông thể tha thứ.]
Dialogue: 0,0:02:13.40,0:02:14.25,Default,,0,0,0,,[Mình phải điều tra cho rõ ràng.]
Dialogue: 0,0:02:14.38,0:02:16.00,Default,,0,0,0,,[Phải điều tra đến cùng mới được.]
Dialogue: 0,0:02:16.50,0:02:20.45,Default,,0,0,0,,[Nhưng ông vua thật sự\Nlại không phải cấp ba Toyotama.]
Dialogue: 0,0:02:21.01,0:02:23.03,Default,,0,0,0,,Phòng thủ, mau về phòng thủ.
Dialogue: 0,0:02:29.13,0:02:32.24,Default,,0,0,0,,[Thật sự cần điều tra là Học viện Daiei.]
Dialogue: 0,0:02:33.46,0:02:34.72,Default,,0,0,0,,[Số 4, Tsuchiya.]
Dialogue: 0,0:02:35.09,0:02:35.95,Default,,0,0,0,,[Mình phải điều tra rõ ràng về anh ta.]
Dialogue: 0,0:02:36.99,0:02:38.53,Default,,0,0,0,,[Quả nhiên chuyến này đi rất đúng.]
Dialogue: 0,0:02:38.87,0:02:41.79,Default,,0,0,0,,[Có lẽ Daiei mới là mục tiêu\Ncủa Ryonan thế hệ mới.]
Dialogue: 0,0:02:43.62,0:02:44.35,Default,,0,0,0,,[Mặt khác.]
Dialogue: 0,0:02:44.35,0:02:47.46,Default,,0,0,0,,[Rukawa nói nguyện vọng đi Mỹ du học\Nvới huấn luyện viên Anzai.]
Dialogue: 0,0:02:49.77,0:02:51.47,Default,,0,0,0,,Tôi phản đối cậu đi.
Dialogue: 0,0:02:54.53,0:02:57.43,Default,,0,0,0,,[Vợ của huấn luyện viên Anzai\Nnói cho Rukawa nghe về Yazawa,]
Dialogue: 0,0:02:57.43,0:02:59.39,Default,,0,0,0,,[cũng khát khao hướng đến nền bóng rổ Mỹ\Nmà rời khỏi huấn luyện viên Anzai.]
Dialogue: 0,0:02:59.49,0:03:03.17,Default,,0,0,0,,[Sau khi đến Mỹ, đã bước trên con đường\Nkhông thể quay lại nữa.]
Dialogue: 0,0:03:05.89,0:03:10.00,Default,,0,0,0,,Tôi nghĩ ông ấy vẫn muốn được nhìn thấy\Nthêm sự tiến bộ của các cậu.
Dialogue: 0,0:03:17.78,0:03:20.71,Default,,0,0,0,,Sau này xin huấn luyện viên\Nhãy nghiêm khắc chỉ dạy em hơn.
Dialogue: 0,0:03:22.00,0:03:25.73,Default,,0,0,0,,[Chỉ còn một tháng nữa\Nlà đến vòng thi đấu toàn quốc.]
Dialogue: 0,0:03:26.80,0:03:34.77,Default,,0,0,0,,[Khí thế đáng sợ của Rukawa]
Dialogue: 0,0:03:28.84,0:03:31.12,Default,,0,0,0,,[Khí thế đáng sợ của Rukawa!]
Dialogue: 0,0:04:06.07,0:04:08.17,Default,,0,0,0,,Gần đây sĩ khí của Tinh Tinh Bự cao quá ha.
Dialogue: 0,0:04:08.41,0:04:09.03,Default,,0,0,0,,Ừ.
Dialogue: 0,0:04:09.91,0:04:11.12,Default,,0,0,0,,Trong một tháng,\Ntrước khi trận đấu toàn quốc diễn ra
Dialogue: 0,0:04:11.23,0:04:13.53,Default,,0,0,0,,chúng ta phải điều chỉnh
Dialogue: 0,0:04:13.60,0:04:15.39,Default,,0,0,0,,thể lực và sĩ khí đến trạng thái cao nhất.
Dialogue: 0,0:04:16.65,0:04:20.48,Default,,0,0,0,,Cho nên một tháng này\Nrất quan trọng với chúng ta.
Dialogue: 0,0:04:20.62,0:04:21.61,Default,,0,0,0,,Phải.
Dialogue: 0,0:04:21.98,0:04:24.27,Default,,0,0,0,,Đặc biệt là cái tên kĩ thuật nền\Ncòn chưa tốt như cậu đấy.
Dialogue: 0,0:04:24.40,0:04:25.53,Default,,0,0,0,,Cậu phải luyện tập nhiều hơn đó.
Dialogue: 0,0:04:26.08,0:04:27.00,Default,,0,0,0,,Đúng, nói không sai tí nào.
Dialogue: 0,0:04:27.24,0:04:30.23,Default,,0,0,0,,Với lại còn phải thay đổi\Ntừ cuộc sống đổ đốn thường ngày kìa.
Dialogue: 0,0:04:30.37,0:04:32.07,Default,,0,0,0,,Chết tiệt, các anh có ý gì hả?
Dialogue: 0,0:04:32.07,0:04:34.01,Default,,0,0,0,,Được rồi được rồi,\Nđừng giận như thế Sakuragi.
Dialogue: 0,0:04:34.12,0:04:36.54,Default,,0,0,0,,Từ đó có thể thấy mọi người đều dựa vào cậu.
Dialogue: 0,0:04:36.54,0:04:37.31,Default,,0,0,0,,Đúng không?
Dialogue: 0,0:04:37.41,0:04:38.14,Default,,0,0,0,,Dĩ nhiên rồi.
Dialogue: 0,0:04:38.38,0:04:40.45,Default,,0,0,0,,Thiên tài Sakuragi\Nlà ngôi sao hy vọng của Shohoku.
Dialogue: 0,0:04:40.76,0:04:42.71,Default,,0,0,0,,Xin lỗi, tôi không có dựa vào cậu.
Dialogue: 0,0:04:42.88,0:04:45.00,Default,,0,0,0,,Cậu chỉ là cục thịt thừa của Shohoku thôi.
Dialogue: 0,0:04:49.10,0:04:50.76,Default,,0,0,0,,Mitchi tốt nhất nên nâng cao thể lực.
Dialogue: 0,0:04:50.76,0:04:53.44,Default,,0,0,0,,Đừng để chơi đến một nửa\Nthì lại gục ngã trên sân.
Dialogue: 0,0:04:53.69,0:04:55.23,Default,,0,0,0,,Còn Ryota nữa, tốt nhất anh nên nghĩ cách
Dialogue: 0,0:04:55.23,0:04:57.10,Default,,0,0,0,,cao thêm 10cm trong vòng một tháng đi.
Dialogue: 0,0:04:57.10,0:04:58.01,Default,,0,0,0,,Cậu nói cái gì?
Dialogue: 0,0:04:58.01,0:04:59.54,Default,,0,0,0,,Chết tiệt, cậu đang làm khó người khác đó.
Dialogue: 0,0:04:59.54,0:05:00.75,Default,,0,0,0,,Được rồi, các cậu đừng đánh nhau nữa.
Dialogue: 0,0:05:02.27,0:05:05.22,Default,,0,0,0,,Ok, bắt đầu thôi.
Dialogue: 0,0:05:07.73,0:05:10.86,Default,,0,0,0,,Nghe đây, về mặt khí thế\Nkhông được thua người khác.
Dialogue: 0,0:05:12.69,0:05:15.40,Default,,0,0,0,,Cười chết.
Dialogue: 0,0:05:18.64,0:05:21.28,Default,,0,0,0,,Tan học thì đến đội bóng rổ tham quan.
Dialogue: 0,0:05:21.37,0:05:23.24,Default,,0,0,0,,Đã trở thành khóa học thông thường\Nmỗi ngày của chúng ta rồi.
Dialogue: 0,0:05:23.42,0:05:26.29,Default,,0,0,0,,Do tên Hanamichi đó\Nbiết cách tạo ra chuyện cười quá.
Dialogue: 0,0:05:26.46,0:05:28.19,Default,,0,0,0,,Lần trước nó muốn úp rổ,\Nkết quả úp rổ thất bại,
Dialogue: 0,0:05:28.29,0:05:30.05,Default,,0,0,0,,đụng đầu vào rổ luôn.
Dialogue: 0,0:05:30.13,0:05:31.02,Default,,0,0,0,,Cười muốn chết.
Dialogue: 0,0:05:31.02,0:05:31.89,Default,,0,0,0,,Đúng đúng.
Dialogue: 0,0:05:32.52,0:05:35.14,Default,,0,0,0,,Shohoku,
Dialogue: 0,0:05:35.66,0:05:37.85,Default,,0,0,0,,cố lên.
Dialogue: 0,0:05:38.16,0:05:40.72,Default,,0,0,0,,Tốt lắm, trung khí rất đầy đủ.
Dialogue: 0,0:05:42.84,0:05:44.33,Default,,0,0,0,,Bắt đầu chơi rồi kìa.
Dialogue: 0,0:05:44.60,0:05:45.90,Default,,0,0,0,,Không khí rất nghiêm túc.
Dialogue: 0,0:05:46.31,0:05:50.82,Default,,0,0,0,,Rồi, làm theo những gì vừa rồi nói,\Nhôm nay chúng ta luyện tập thi đấu.
Dialogue: 0,0:05:50.96,0:05:51.76,Default,,0,0,0,,Đầu tiên là đội A.
Dialogue: 0,0:05:51.96,0:05:57.40,Default,,0,0,0,,Miyagi, Rukawa, Kakuta, Shiozaki, Ishii.
Dialogue: 0,0:05:57.57,0:05:58.90,Default,,0,0,0,,Năm người tạo thành một đội.
Dialogue: 0,0:05:59.22,0:05:59.91,Default,,0,0,0,,Được.
Dialogue: 0,0:06:01.54,0:06:02.83,Default,,0,0,0,,Tiếp theo là đội B.
Dialogue: 0,0:06:03.00,0:06:07.00,Default,,0,0,0,,Kogure, Mitsui, Sakuragi, Yasuda và Kuwata.
Dialogue: 0,0:06:07.17,0:06:07.90,Default,,0,0,0,,Được.
Dialogue: 0,0:06:08.17,0:06:10.40,Default,,0,0,0,,Xem ra chỉ có mình\Nlà có thể đối phó Rukawa rồi.
Dialogue: 0,0:06:10.64,0:06:12.35,Default,,0,0,0,,[Tên hồ ly gian trá đó.]
Dialogue: 0,0:06:12.55,0:06:14.74,Default,,0,0,0,,[Hôm nay phải cho anh ta biết lợi hại.]
Dialogue: 0,0:06:16.18,0:06:18.58,Default,,0,0,0,,Cậu làm gì mà cứ hắt hơi liên tục vậy?
Dialogue: 0,0:06:20.48,0:06:22.53,Default,,0,0,0,,Bỏ đi, hôm nay trông cậu hình như bị cảm rồi
Dialogue: 0,0:06:22.61,0:06:23.77,Default,,0,0,0,,qua một bên nghỉ ngơi là được.
Dialogue: 0,0:06:24.01,0:06:25.91,Default,,0,0,0,,Ý là đừng có lây cho người khác.
Dialogue: 0,0:06:25.99,0:06:28.22,Default,,0,0,0,,Không có vấn đề, đồ ngốc sẽ không bị cảm đâu.
Dialogue: 0,0:06:28.36,0:06:30.62,Default,,0,0,0,,Ryota chết tiệt, anh nói vậy là có ý gì hả?
Dialogue: 0,0:06:32.03,0:06:32.72,Default,,0,0,0,,Tôi biết rồi.
Dialogue: 0,0:06:32.93,0:06:35.03,Default,,0,0,0,,Anh để ý chuyện\Ntôi nói về chiều cao của anh lúc nãy
Dialogue: 0,0:06:35.07,0:06:36.44,Default,,0,0,0,,cho nên anh giận chứ gì.
Dialogue: 0,0:06:36.44,0:06:37.35,Default,,0,0,0,,Bớt lải nhải đi.
Dialogue: 0,0:06:38.24,0:06:40.99,Default,,0,0,0,,Sao cậu chẳng có chút đầu óc nào vậy?
Dialogue: 0,0:06:41.17,0:06:43.01,Default,,0,0,0,,Chọt vào nỗi đau của tôi trước mặt mọi người.
Dialogue: 0,0:06:43.01,0:06:43.92,Default,,0,0,0,,Cậu làm tôi tức chết mà.
Dialogue: 0,0:06:48.04,0:06:49.97,Default,,0,0,0,,Mau bắt đầu đi đồ ngu.
Dialogue: 0,0:06:50.29,0:06:52.22,Default,,0,0,0,,Chết tiệt, Rukawa mày...
Dialogue: 0,0:06:53.30,0:06:57.22,Default,,0,0,0,,- Còn không mau bắt đầu cho tôi.\N- Tinh Tinh Bự.
Dialogue: 0,0:06:57.53,0:06:58.26,Default,,0,0,0,,Thật là...
Dialogue: 0,0:06:59.14,0:07:01.18,Default,,0,0,0,,Khó có được sĩ khí của mọi người đều cao.
Dialogue: 0,0:07:01.28,0:07:02.15,Default,,0,0,0,,Tại sao chỉ có cái tên Hanamichi đó
Dialogue: 0,0:07:02.26,0:07:04.57,Default,,0,0,0,,vẫn giữ cái bộ dạng không có đầu óc vậy.
Dialogue: 0,0:07:05.01,0:07:05.93,Default,,0,0,0,,Nói phải đó.
Dialogue: 0,0:07:06.07,0:07:07.07,Default,,0,0,0,,Không, không phải như vậy.
Dialogue: 0,0:07:07.20,0:07:09.59,Default,,0,0,0,,Tao cho là bọn mày nói sai rồi.
Dialogue: 0,0:07:10.88,0:07:12.35,Default,,0,0,0,,[Đáng ghét.]
Dialogue: 0,0:07:12.55,0:07:18.56,Default,,0,0,0,,[Rukawa chết tiệt, mày chờ đó mà xem, chờ mà xem.]
Dialogue: 0,0:07:20.78,0:07:23.58,Default,,0,0,0,,Matsui, cậu có muốn đi xem tập bóng rổ không?
Dialogue: 0,0:07:23.82,0:07:25.04,Default,,0,0,0,,Mình thấy cậu không phải muốn xem đội bóng
Dialogue: 0,0:07:25.10,0:07:27.14,Default,,0,0,0,,mà muốn xem Rukawa đúng không?
Dialogue: 0,0:07:28.05,0:07:29.18,Default,,0,0,0,,Không có.
Dialogue: 0,0:07:29.28,0:07:31.96,Default,,0,0,0,,Vào giờ phút này mình thành tâm thành ý
Dialogue: 0,0:07:32.13,0:07:34.09,Default,,0,0,0,,muốn cổ vũ cho Shohoku,\Nsao cậu lại nghĩ như vậy chứ.
Dialogue: 0,0:07:35.31,0:07:36.57,Default,,0,0,0,,Chẳng hiểu tâm tư của mình chút nào.
Dialogue: 0,0:07:36.68,0:07:38.84,Default,,0,0,0,,Mình hiểu mình hiểu, chúng ta đi thôi.
Dialogue: 0,0:07:40.01,0:07:43.46,Default,,0,0,0,,Không biết Rukawa có ý gì với Haruko không.
Dialogue: 0,0:07:44.32,0:07:46.49,Default,,0,0,0,,Đáng ghét, không có đâu.
Dialogue: 0,0:07:47.46,0:07:50.91,Default,,0,0,0,,Nhưng mà mình thấy cậu ấy\Ncảm giác được cậu có ý với cậu ấy đó.
Dialogue: 0,0:07:51.16,0:07:53.06,Default,,0,0,0,,Trước mặt cậu ấy cậu cứ nói mãi không ngừng.
Dialogue: 0,0:07:54.24,0:07:55.65,Default,,0,0,0,,Rõ ràng vậy sao?
Dialogue: 0,0:07:55.80,0:07:58.11,Default,,0,0,0,,Tiêu rồi, làm sao đây?
Dialogue: 0,0:07:58.21,0:08:00.47,Default,,0,0,0,,Bây giờ là thời kì quan trọng,\Nđối mặt với giải đấu toàn quốc.
Dialogue: 0,0:08:00.59,0:08:04.05,Default,,0,0,0,,Trong đầu cậu ấy không thể có mình, nhưng mà...
Dialogue: 0,0:08:04.31,0:08:06.33,Default,,0,0,0,,Bỏ đi, bớt nằm mơ.
Dialogue: 0,0:08:11.34,0:08:13.90,Default,,0,0,0,,Mọi người làm sao vậy,\Nsao sắc mặt lại khó coi thế này.
Dialogue: 0,0:08:14.04,0:08:14.63,Default,,0,0,0,,Haruko.
Dialogue: 0,0:08:16.21,0:08:18.42,Default,,0,0,0,,Lợi hại quá.
Dialogue: 0,0:08:30.66,0:08:32.09,Default,,0,0,0,,Phạm lỗi, phạm lỗi.
Dialogue: 0,0:08:33.99,0:08:36.81,Default,,0,0,0,,Vừa rồi là Kogure phạm lỗi,\Nphòng thủ phạm lỗi.
Dialogue: 0,0:08:36.81,0:08:37.91,Default,,0,0,0,,Anh nói cái gì?
Dialogue: 0,0:08:38.43,0:08:39.38,Default,,0,0,0,,Không sao chứ?
Dialogue: 0,0:08:39.46,0:08:41.65,Default,,0,0,0,,Không sao, anh thì sao?
Dialogue: 0,0:08:44.28,0:08:46.08,Default,,0,0,0,,Rukawa tên đó quá lợi hại.
Dialogue: 0,0:08:46.21,0:08:48.54,Default,,0,0,0,,Sĩ khí của mọi người cao ghê nhỉ.
Dialogue: 0,0:08:50.95,0:08:52.88,Default,,0,0,0,,Nhưng Rukawa kịch liệt hơn\Nnhững người khác.
Dialogue: 0,0:09:06.45,0:09:08.22,Default,,0,0,0,,[Khí thế đáng sợ quá.]
Dialogue: 0,0:09:08.72,0:09:10.02,Default,,0,0,0,,[Dường như làm mọi người đều run sợ.]
Dialogue: 0,0:09:10.26,0:09:12.39,Default,,0,0,0,,[Trước giờ Rukawa chưa từng như vậy.]
Dialogue: 0,0:09:18.90,0:09:21.03,Default,,0,0,0,,Cảm giác như có thể nuốt sống người khác ấy.
Dialogue: 0,0:09:28.62,0:09:30.22,Default,,0,0,0,,Anh ngây ra đó làm gì hả Yasuda?
Dialogue: 0,0:09:30.38,0:09:32.68,Default,,0,0,0,,Anh đứng bất động đó\Nthì thi đấu cái gì, mau chuyển bóng đi.
Dialogue: 0,0:09:32.77,0:09:33.47,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:09:35.39,0:09:35.98,Default,,0,0,0,,Được.
Dialogue: 0,0:09:38.83,0:09:40.66,Default,,0,0,0,,Bị Hanamichi lách qua rồi.
Dialogue: 0,0:09:40.66,0:09:42.45,Default,,0,0,0,,Đồ ngu, các người quá bất cẩn rồi.
Dialogue: 0,0:09:42.54,0:09:44.80,Default,,0,0,0,,Không, vừa rồi là do\Nđộng tác của Sakuragi quá nhanh.
Dialogue: 0,0:09:44.96,0:09:46.38,Default,,0,0,0,,Rukawa đến rồi.
Dialogue: 0,0:09:46.47,0:09:48.37,Default,,0,0,0,,Ném bóng bình dân.
Dialogue: 0,0:10:18.93,0:10:19.83,Default,,0,0,0,,Làm gì?
Dialogue: 0,0:10:25.37,0:10:28.31,Default,,0,0,0,,Tao nói trước\Ntao không có thời gian để ý đến mày.
Dialogue: 0,0:10:28.47,0:10:29.56,Default,,0,0,0,,Mày nói cái gì?
Dialogue: 0,0:10:30.94,0:10:31.97,Default,,0,0,0,,Nói chung...
Dialogue: 0,0:10:34.95,0:10:38.65,Default,,0,0,0,,[Cho dù thế nào thì trở thành\Nhọc sinh cấp ba số một Nhật Bản trước đã.]
Dialogue: 0,0:10:45.02,0:10:46.05,Default,,0,0,0,,[Bây giờ...]
Dialogue: 0,0:10:46.49,0:10:48.77,Default,,0,0,0,,[Mình đã xác nhận rõ ràng rồi.]
Dialogue: 0,0:10:48.87,0:10:50.30,Default,,0,0,0,,[Mặc dù trước đây mình cũng biết,]
Dialogue: 0,0:10:50.43,0:10:51.60,Default,,0,0,0,,[biết thì biết,]
Dialogue: 0,0:10:51.60,0:10:53.21,Default,,0,0,0,,[bây giờ mình xác nhận lại lần nữa.]
Dialogue: 0,0:10:56.92,0:10:59.48,Default,,0,0,0,,Thằng khốn Rukawa.
Dialogue: 0,0:11:00.73,0:11:06.23,Default,,0,0,0,,Thằng khốn đó, mình ghét nó nhất.
Dialogue: 0,0:11:40.87,0:11:42.10,Default,,0,0,0,,[Đáng sợ quá.]
Dialogue: 0,0:11:49.35,0:11:53.48,Default,,0,0,0,,[Bóng rổ đã chiếm hết đầu óc Rukawa rồi.]
Dialogue: 0,0:11:58.69,0:12:00.43,Default,,0,0,0,,Được, phòng thủ.
Dialogue: 0,0:12:00.57,0:12:01.09,Default,,0,0,0,,Đi.
Dialogue: 0,0:12:03.09,0:12:04.28,Default,,0,0,0,,[Trong lòng cậu ấy]
Dialogue: 0,0:12:04.52,0:12:08.39,Default,,0,0,0,,[vốn không hề có chỗ cho mình tiến vào.]
Dialogue: 0,0:12:08.99,0:12:12.08,Default,,0,0,0,,Phòng thủ, đúng, hạ thấp phần trung tâm xuống.
Dialogue: 0,0:12:50.90,0:12:51.92,Default,,0,0,0,,Tiêu rồi.
Dialogue: 0,0:13:05.24,0:13:06.21,Default,,0,0,0,,Cậu sao rồi?
Dialogue: 0,0:13:07.87,0:13:10.56,Default,,0,0,0,,Không được, gần đây thường hay chảy nước mắt.
Dialogue: 0,0:13:15.65,0:13:16.74,Default,,0,0,0,,[Cái tên Rukawa đó.]
Dialogue: 0,0:13:18.12,0:13:20.22,Default,,0,0,0,,[Sắp trở thành chủ lực thật sự rồi.]
Dialogue: 0,0:13:21.36,0:13:25.80,Default,,0,0,0,,[Cậu đã có mục tiêu rõ ràng,\Nthoát khỏi sự mơ hồ trước đây.]
Dialogue: 0,0:13:26.28,0:13:27.18,Default,,0,0,0,,[Như vậy rất tốt.]
Dialogue: 0,0:13:31.79,0:13:35.69,Default,,0,0,0,,[Chết tiệt, tên hồ ly gian xảo đó.]
Dialogue: 0,0:13:36.03,0:13:39.72,Default,,0,0,0,,Cháy lên rồi, Hanamichi đã sôi sục rồi.
Dialogue: 0,0:13:39.93,0:13:42.06,Default,,0,0,0,,Đó là vì nó không muốn thua Rukawa,
Dialogue: 0,0:13:42.15,0:13:43.45,Default,,0,0,0,,đặc biệt là ở trước mặt Haruko.
Dialogue: 0,0:13:44.96,0:13:50.69,Default,,0,0,0,,Rukawa cố lên, Rukawa cố lên.
Dialogue: 0,0:13:51.63,0:13:56.14,Default,,0,0,0,,Cút qua một bên đi Đầu Đinh Đỏ.
Dialogue: 0,0:13:57.18,0:14:00.68,Default,,0,0,0,,Tao thấy danh tiếng của Hanamichi\Nbại hoại quá rồi.
Dialogue: 0,0:14:00.68,0:14:02.51,Default,,0,0,0,,Mấy đứa con gái đó xuất hiện lúc nào vậy?
Dialogue: 0,0:14:04.22,0:14:09.17,Default,,0,0,0,,Rukawa cố lên, Rukawa cố lên.
Dialogue: 0,0:14:09.23,0:14:14.25,Default,,0,0,0,,Đáng ghét, rốt cuộc tên hồ ly gian xảo đó\Ncó chỗ nào tốt?
Dialogue: 0,0:14:14.36,0:14:15.26,Default,,0,0,0,,Mấy người...
Dialogue: 0,0:14:16.77,0:14:29.17,Default,,0,0,0,,Rukawa cố lên, Đầu Đinh Đỏ cút đi.
Dialogue: 0,0:14:37.14,0:14:40.70,Default,,0,0,0,,Ngu ngốc, bây giờ đang luyện tập,\Ncậu làm gì vậy? Mau đứng lên.
Dialogue: 0,0:14:44.33,0:14:47.42,Default,,0,0,0,,Cười cái gì? Có gì buồn cười hả?
Dialogue: 0,0:14:50.36,0:14:51.27,Default,,0,0,0,,Chúng ta về thôi.
Dialogue: 0,0:14:52.27,0:14:54.50,Default,,0,0,0,,Cậu phải về rồi, như vậy có ổn không?
Dialogue: 0,0:14:59.14,0:15:01.41,Default,,0,0,0,,Đợi mình với Haruko.
Dialogue: 0,0:15:14.22,0:15:20.68,Default,,0,0,0,,Rukawa ngầu quá, lợi hại quá.
Dialogue: 0,0:15:22.94,0:15:29.11,Default,,0,0,0,,[Mình tuyệt đối, tuyệt đối không thể thua.]
Dialogue: 0,0:15:39.82,0:15:43.00,Default,,0,0,0,,[Đại học thể thao Fukasawa]\N[Huấn luyện viên bóng rổ]
Dialogue: 0,0:15:39.82,0:15:43.00,Default,,0,0,0,,[Karasawa Kazuo]
Dialogue: 0,0:15:40.69,0:15:46.27,Default,,0,0,0,,[Huấn luyện viên Karasawa Kazuo\Ncủa đội bóng rổ đại học Fukasawa.]
Dialogue: 0,0:15:48.00,0:15:48.77,Default,,0,0,0,,Làm phiền.
Dialogue: 0,0:15:51.81,0:15:53.64,Default,,0,0,0,,Huấn luyện viên, thầy tìm em có chuyện gì?
Dialogue: 0,0:15:54.47,0:15:58.02,Default,,0,0,0,,[Đại học thể thao Fukasawa]\N[Sinh viên năm ba]
Dialogue: 0,0:15:54.47,0:15:58.02,Default,,0,0,0,,[Sugiyama Shouta]
Dialogue: 0,0:15:54.81,0:15:58.18,Default,,0,0,0,,[Sinh viên năm ba của đại học\Nthể thao Fukasawa, Sugiyama Shouta.]
Dialogue: 0,0:16:00.58,0:16:01.17,Default,,0,0,0,,Huấn luyện viên.
Dialogue: 0,0:16:01.69,0:16:05.36,Default,,0,0,0,,Băng ghi hình của cuộc thi đó,\Ntừ trận trước đến bây giờ,
Dialogue: 0,0:16:05.77,0:16:06.99,Default,,0,0,0,,không biết đã xem bao nhiêu lần rồi nữa.
Dialogue: 0,0:16:14.41,0:16:17.34,Default,,0,0,0,,Thầy đang chỉ Agaki của Shohoku sao?
Dialogue: 0,0:16:27.09,0:16:31.64,Default,,0,0,0,,Là trung phong số một Nhật Bản,\Ncậu thấy cậu ta thế nào?
Dialogue: 0,0:16:32.36,0:16:33.29,Default,,0,0,0,,Em cho rằng,
Dialogue: 0,0:16:36.88,0:16:40.61,Default,,0,0,0,,có thể xem như cậu ta là\Ntrung phong tốt nhất của tỉnh Kanagawa.
Dialogue: 0,0:16:46.62,0:16:50.39,Default,,0,0,0,,Shohoku cố lên.
Dialogue: 0,0:16:52.40,0:16:54.09,Default,,0,0,0,,Huấn luyện viên cực khổ rồi.
Dialogue: 0,0:16:55.92,0:16:57.22,Default,,0,0,0,,Các cậu cũng cực khổ rồi.
Dialogue: 0,0:16:57.45,0:16:59.75,Default,,0,0,0,,Vậy tôi đi trước đây.
Dialogue: 0,0:17:00.28,0:17:01.11,Default,,0,0,0,,Cảm ơn huấn luyện viên.
Dialogue: 0,0:17:01.96,0:17:02.93,Default,,0,0,0,,Cảm ơn huấn luyện viên.
Dialogue: 0,0:17:06.84,0:17:07.70,Default,,0,0,0,,Akagi.
Dialogue: 0,0:17:08.47,0:17:10.58,Default,,0,0,0,,Tôi nghĩ cậu cũng hiểu
Dialogue: 0,0:17:10.70,0:17:12.50,Default,,0,0,0,,trước khi chân cậu hồi phục hoàn toàn
Dialogue: 0,0:17:12.58,0:17:14.33,Default,,0,0,0,,tốt nhất đừng miễn cưỡng bản thân quá.
Dialogue: 0,0:17:16.17,0:17:16.74,Default,,0,0,0,,Vâng, em hiểu.
Dialogue: 0,0:17:20.98,0:17:22.75,Default,,0,0,0,,Mệt muốn chết.
Dialogue: 0,0:17:22.75,0:17:23.98,Default,,0,0,0,,Thật sự chịu không nổi.
Dialogue: 0,0:17:24.11,0:17:25.10,Default,,0,0,0,,Tôi sắp chết rồi.
Dialogue: 0,0:17:25.38,0:17:26.57,Default,,0,0,0,,Tôi cũng thế.
Dialogue: 0,0:17:27.98,0:17:30.75,Default,,0,0,0,,Không biết hôm nay\NRukawa uống nhầm thuốc gì.
Dialogue: 0,0:17:33.25,0:17:34.34,Default,,0,0,0,,Nước vào mũi rồi.
Dialogue: 0,0:17:35.82,0:17:39.64,Default,,0,0,0,,Đúng vậy, hôm nay cậu ta\Nkhông giống bình thường.
Dialogue: 0,0:17:39.73,0:17:41.71,Default,,0,0,0,,Hệt như có thể nuốt sống người ta ấy.
Dialogue: 0,0:17:44.65,0:17:45.99,Default,,0,0,0,,Đáng sợ thật.
Dialogue: 0,0:17:45.99,0:17:48.15,Default,,0,0,0,,tên đó chẳng có gì chỉ thích ra vẻ ngầu thôi.
Dialogue: 0,0:17:48.40,0:17:49.62,Default,,0,0,0,,Cái tên chết tiệt đó\Ntôi nhìn là thấy không vui rồi.
Dialogue: 0,0:17:49.71,0:17:51.21,Default,,0,0,0,,Nước vào mũi cậu chảy ra rồi kìa.
Dialogue: 0,0:17:51.68,0:17:54.05,Default,,0,0,0,,Ayako, tiếp theo nhờ em đó.
Dialogue: 0,0:17:54.17,0:17:55.46,Default,,0,0,0,,Không thành vấn đề, cứ để em lo.
Dialogue: 0,0:17:58.90,0:17:59.88,Default,,0,0,0,,Tránh ra.
Dialogue: 0,0:18:00.01,0:18:01.39,Default,,0,0,0,,Đàn anh gọi mày kìa.
Dialogue: 0,0:18:09.33,0:18:10.44,Default,,0,0,0,,Mới có chút như vậy.
Dialogue: 0,0:18:14.62,0:18:15.64,Default,,0,0,0,,Đừng có so nữa.
Dialogue: 0,0:18:15.84,0:18:17.46,Default,,0,0,0,,Tao còn nhiều lắm.
Dialogue: 0,0:18:23.31,0:18:24.68,Default,,0,0,0,,Áo ba lỗ tập thể thao của tôi.
Dialogue: 0,0:18:25.35,0:18:26.08,Default,,0,0,0,,Đồ ngu.
Dialogue: 0,0:18:27.74,0:18:28.84,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:18:28.96,0:18:30.49,Default,,0,0,0,,Sakuragi Hanamichi.
Dialogue: 0,0:18:30.83,0:18:31.45,Default,,0,0,0,,Lại nữa rồi.
Dialogue: 0,0:18:31.93,0:18:33.70,Default,,0,0,0,,Cậu nói lại nữa rồi cái gì?
Dialogue: 0,0:18:33.91,0:18:35.34,Default,,0,0,0,,Mau lên, hôm nay lại tiếp tục tập luyện.
Dialogue: 0,0:18:35.34,0:18:36.90,Default,,0,0,0,,Lại phải tập luyện kĩ thuật cơ bản.
Dialogue: 0,0:18:36.90,0:18:39.69,Default,,0,0,0,,Mỗi ngày đều phải tập đi tập lại\Nkĩ thuật cơ bản.
Dialogue: 0,0:18:39.86,0:18:41.93,Default,,0,0,0,,Chết tiệt. Không cho phép oán giận Ayako.
Dialogue: 0,0:18:43.01,0:18:45.18,Default,,0,0,0,,[Dẫn bóng, chuyền bóng, ném bóng.]
Dialogue: 0,0:18:45.45,0:18:46.75,Default,,0,0,0,,[Từ sau khi Sakuragi vào đội bóng rổ]
Dialogue: 0,0:18:46.83,0:18:49.50,Default,,0,0,0,,[ngoại trừ tập luyện với nhóm,]
Dialogue: 0,0:18:49.57,0:18:52.26,Default,,0,0,0,,[còn phải tăng thêm tập luyện cá nhân.]
Dialogue: 0,0:18:52.67,0:18:53.83,Default,,0,0,0,,Dĩ nhiên rồi.
Dialogue: 0,0:18:54.14,0:18:55.07,Default,,0,0,0,,Nói rõ chút,
Dialogue: 0,0:18:55.12,0:18:58.84,Default,,0,0,0,,thật ra thiên tài như tôi\Nkhông cần phải tập luyện kĩ thuật cơ bản.
Dialogue: 0,0:18:59.77,0:19:01.60,Default,,0,0,0,,Cậu bớt bốc phét đi đồ mới vào nghề.
Dialogue: 0,0:19:01.83,0:19:04.00,Default,,0,0,0,,Đúng đúng, Ayako nói rất đúng.
Dialogue: 0,0:19:13.77,0:19:14.43,Default,,0,0,0,,Đàn anh.
Dialogue: 0,0:19:17.10,0:19:19.66,Default,,0,0,0,,[Không ngờ thằng nhóc này\Nsẽ chủ động nói chuyện với người khác.]
Dialogue: 0,0:19:20.47,0:19:21.53,Default,,0,0,0,,Có chuyện gì vậy Rukawa?
Dialogue: 0,0:19:26.11,0:19:29.51,Default,,0,0,0,,Tôi muốn có trận đấu một đấu một với anh.
Dialogue: 0,0:19:31.04,0:19:34.48,Default,,0,0,0,,Hôm nay thằng nhóc này vô cùng nghiêm túc,\Nrốt cuộc đã xảy ra chuyện gì?
Dialogue: 0,0:19:38.41,0:19:40.54,Default,,0,0,0,,Được thôi, tôi đồng ý
Dialogue: 0,0:19:42.08,0:19:43.32,Default,,0,0,0,,thi đấu một với một với cậu.
Dialogue: 0,0:19:43.65,0:19:44.77,Default,,0,0,0,,Phải thú vị lắm mới đúng.
Dialogue: 0,0:19:49.90,0:19:52.55,Default,,0,0,0,,Cũng nhân cơ hội này quyết định xem ai mới là
Dialogue: 0,0:19:52.65,0:19:53.88,Default,,0,0,0,,át chủ bài thật sự của Shohoku.
Dialogue: 0,0:20:06.13,0:20:08.07,Default,,0,0,0,,Hai người họ định làm gì?
Dialogue: 0,0:20:16.06,0:20:16.93,Default,,0,0,0,,Đến đi.
Dialogue: 0,0:20:27.67,0:20:30.23,Default,,0,0,0,,[Rukawa, muốn trở thành\Ncầu thủ cấp ba số một Nhật Bản.]
Dialogue: 0,0:20:30.44,0:20:33.80,Default,,0,0,0,,[Khiêu chiến một đấu một\Nvới Mitsui của lớp 12.]
Dialogue: 0,0:20:34.60,0:20:40.47,Default,,0,0,0,,[Át chủ bài thật sự của Shohoku\Nlà Mitsui hay Rukawa đây?]
Dialogue: 0,0:20:48.51,0:20:55.83,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:20:56.31,0:21:03.37,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:21:13.80,0:21:20.46,Default,,0,0,0,,♫ Từng một lòng muốn thực hiện\Nnhững ước mơ xưa cũ ♫
Dialogue: 0,0:21:21.12,0:21:25.68,Default,,0,0,0,,♫ Cho đến hôm nay vẫn chói mắt như thế ♫
Dialogue: 0,0:21:28.36,0:21:35.91,Default,,0,0,0,,♫ Cho dù tâm tình đầy sự bất an ♫
Dialogue: 0,0:21:36.03,0:21:40.02,Default,,0,0,0,,♫ Tôi vẫn vững tin\Nvới lựa chọn của chính mình ♫
Dialogue: 0,0:21:42.25,0:21:48.99,Default,,0,0,0,,♫ Thích vẻ mặt thuần khiết\Nkhông điểm trang gì của cậu ♫
Dialogue: 0,0:21:49.13,0:21:55.03,Default,,0,0,0,,♫ Nếu một ngày nó thay đổi,\Nsẽ làm người ta thấy đau lòng lắm ♫
Dialogue: 0,0:21:55.98,0:22:01.60,Default,,0,0,0,,♫ Thời niên thiếu đã từng luôn lấp lánh ♫
Dialogue: 0,0:22:01.69,0:22:04.13,Default,,0,0,0,,♫ Đôi mắt của cậu, hỡi bạn tôi ♫
Dialogue: 0,0:22:04.23,0:22:10.63,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:22:10.83,0:22:18.00,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:22:21.32,0:22:22.39,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:24.61,0:22:25.71,Default,,0,0,0,,Quyết thắng bại đi Rukawa.
Dialogue: 0,0:22:25.71,0:22:26.84,Default,,0,0,0,,Mitchi, đang làm gì vậy?
Dialogue: 0,0:22:26.94,0:22:28.86,Default,,0,0,0,,Đừng có thua tên hồ ly đó.
Dialogue: 0,0:22:28.86,0:22:29.50,Default,,0,0,0,,Lắm mồm thật.
Dialogue: 0,0:22:29.61,0:22:31.30,Default,,0,0,0,,Im miệng đi,\Ntập kĩ thuật cơ bản của cậu cho tốt đi kìa.
Dialogue: 0,0:22:32.32,0:22:36.23,Default,,0,0,0,,Dù mình biết tên này có cả tốc độ và độ cao.
Dialogue: 0,0:22:36.32,0:22:37.75,Default,,0,0,0,,Nhưng cậu ấy không chỉ chỉ có những thứ đó.
Dialogue: 0,0:22:37.86,0:22:41.08,Default,,0,0,0,,Hình như có thứ gì đó\Nđang đâm chồi trong cơ thể cậu ấy.
Dialogue: 0,0:22:41.41,0:22:45.62,Default,,0,0,0,,Nhưng mình sẽ không thua\Ntên học sinh lớp 10 đâu.
Dialogue: 0,0:22:45.69,0:22:46.77,Default,,0,0,0,,"Cao thủ bóng rổ."
Dialogue: 0,0:22:46.97,0:22:49.02,Default,,0,0,0,,"Át chủ bài thật sự của Shohoku!"
Dialogue: 0,0:22:49.11,0:22:50.34,Default,,0,0,0,,Chắc chắn phải xem đó.
