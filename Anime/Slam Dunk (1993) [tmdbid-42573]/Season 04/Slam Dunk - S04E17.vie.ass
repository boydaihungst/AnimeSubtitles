Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.76,0:00:20.72,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.80,0:00:24.05,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.72,0:00:30.24,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.47,0:00:36.51,Default,,0,0,0,,♫ Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.43,0:00:44.27,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.07,0:00:51.07,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.26,0:00:57.07,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.16,0:01:03.14,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.23,0:01:09.97,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.91,0:01:19.86,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:19.98,0:01:26.01,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.15,0:01:31.92,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:32.02,0:01:40.42,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:56.68,0:01:58.51,Default,,0,0,0,,[Hanamichi lấy mục tiêu là\Nném rổ 20 nghìn lần]
Dialogue: 0,0:01:58.63,0:02:00.72,Default,,0,0,0,,[cố gắng tập luyện không kể ngày đêm.]
Dialogue: 0,0:02:01.13,0:02:03.05,Default,,0,0,0,,[Với sự hướng dẫn\Ncủa chính huấn luyện viên Anzai]
Dialogue: 0,0:02:03.27,0:02:05.01,Default,,0,0,0,,[cùng sự giúp đỡ của\Nnhóm bạn tốt Yohei cùng Haruko,]
Dialogue: 0,0:02:05.10,0:02:07.14,Default,,0,0,0,,[thành quả của tập huấn đặc biệt\Nđã dần hiện ra.]
Dialogue: 0,0:02:10.23,0:02:10.79,Default,,0,0,0,,[Một mặt khác,]
Dialogue: 0,0:02:10.85,0:02:13.82,Default,,0,0,0,,[đội bóng rổ Shohoku\Nđến tỉnh Shizuoka để tập huấn tập trung.]
Dialogue: 0,0:02:13.92,0:02:17.19,Default,,0,0,0,,[Trong buổi đấu tập đã có một trận đấu vất vả\Nvới đại diện của tỉnh Shizuoka]
Dialogue: 0,0:02:17.19,0:02:19.45,Default,,0,0,0,,[là trường cấp ba Jousei\Ntừng vào top tám năm ngoái.]
Dialogue: 0,0:02:20.76,0:02:22.36,Default,,0,0,0,,Bây giờ cái thằng nhóc Sakuragi đó có lẽ
Dialogue: 0,0:02:22.50,0:02:24.05,Default,,0,0,0,,cũng đang cố gắng bằng cách của cậu ta.
Dialogue: 0,0:02:24.26,0:02:27.63,Default,,0,0,0,,Nếu như để cậu ta biết chúng ta thua...
Dialogue: 0,0:02:28.84,0:02:32.50,Default,,0,0,0,,Không có thiên tài Sakuragi tôi xuất trận\Nthì đúng là mấy người không ổn.
Dialogue: 0,0:02:36.98,0:02:39.00,Default,,0,0,0,,[Ngày hôm đó, Shohoku\Nđã đánh bại trường cấp ba Jousei]
Dialogue: 0,0:02:39.25,0:02:42.37,Default,,0,0,0,,[với cách biệt một điểm.]
Dialogue: 0,0:02:45.25,0:02:47.93,Default,,0,0,0,,Thắng rồi! Tốt lắm! Tuyệt quá, thắng rồi!
Dialogue: 0,0:02:48.10,0:02:57.45,Default,,0,0,0,,[Ngày hừng hực nhất của Hanamichi]
Dialogue: 0,0:02:50.60,0:02:53.29,Default,,0,0,0,,[Ngày hừng hực nhất của Hanamichi.]
Dialogue: 0,0:03:03.51,0:03:05.77,Default,,0,0,0,,Được rồi, buổi tập sáng kết thúc.
Dialogue: 0,0:03:15.89,0:03:17.50,Default,,0,0,0,,Sakuragi, cậu không sao chứ?
Dialogue: 0,0:03:17.72,0:03:19.70,Default,,0,0,0,,Haruko, cậu cứ yên tâm đi.
Dialogue: 0,0:03:19.80,0:03:20.33,Default,,0,0,0,,Nhưng mà...
Dialogue: 0,0:03:20.43,0:03:22.29,Default,,0,0,0,,Mình... cuối cùng mình cũng được ăn.
Dialogue: 0,0:03:22.43,0:03:24.39,Default,,0,0,0,,Cơm bò chiên, cơm tôm chiên, cả mì thịt bò nữa.
Dialogue: 0,0:03:24.39,0:03:26.78,Default,,0,0,0,,Rồi súp miso đổi thành cơm cà ri.
Dialogue: 0,0:03:26.88,0:03:28.59,Default,,0,0,0,,Hôm nay mình phải ăn cho đủ.
Dialogue: 0,0:03:28.78,0:03:30.45,Default,,0,0,0,,Cậu xem đi, mình nói không sai nhỉ?
Dialogue: 0,0:03:30.92,0:03:32.17,Default,,0,0,0,,Cái thằng Hanamichi này chỉ cần có cơm ăn
Dialogue: 0,0:03:32.28,0:03:34.89,Default,,0,0,0,,thì mãi mãi không gục ngã.
Dialogue: 0,0:03:36.66,0:03:40.03,Default,,0,0,0,,Đúng rồi, hôm qua anh tôi gọi về nhà.
Dialogue: 0,0:03:40.15,0:03:42.64,Default,,0,0,0,,Bọn họ đã thắng trường cấp ba Jousei\Nvới cách biệt một điểm.
Dialogue: 0,0:03:43.78,0:03:46.44,Default,,0,0,0,,Shohoku đánh bại\Nđại diện của tỉnh Shizuoka à?
Dialogue: 0,0:03:46.57,0:03:47.54,Default,,0,0,0,,Giỏi quá.
Dialogue: 0,0:03:47.81,0:03:49.22,Default,,0,0,0,,Tao nghĩ bọn họ chắc chắn là vì
Dialogue: 0,0:03:49.22,0:03:50.92,Default,,0,0,0,,không có Hanamichi\Nnên mới trở lại như bình thường.
Dialogue: 0,0:03:51.74,0:03:52.71,Default,,0,0,0,,Nghe nói mọi người đều có ý chí chiến đấu,
Dialogue: 0,0:03:52.83,0:03:55.40,Default,,0,0,0,,trận đấu thứ hai vào ngày hôm nay\Ncũng đã thắng.
Dialogue: 0,0:03:55.54,0:03:59.80,Default,,0,0,0,,Thành quả huấn luyện tập trung\Ncủa nhóm Akagi cũng đang dần hiện ra.
Dialogue: 0,0:04:01.43,0:04:02.36,Default,,0,0,0,,Đúng rồi, còn nữa.
Dialogue: 0,0:04:02.50,0:04:05.86,Default,,0,0,0,,Nghe nói lần này Rukawa\Ncũng luôn giữ được trạng thái tốt nhất.
Dialogue: 0,0:04:06.07,0:04:07.93,Default,,0,0,0,,Điều này chứng mình Rukawa bây giờ\Nkhông chỉ là khí thế hơn người
Dialogue: 0,0:04:07.93,0:04:10.48,Default,,0,0,0,,mà đến thể lực cũng tràn đầy.
Dialogue: 0,0:04:10.48,0:04:11.90,Default,,0,0,0,,Không hổ là Rukawa.
Dialogue: 0,0:04:13.99,0:04:15.03,Default,,0,0,0,,[Chết tiệt.]
Dialogue: 0,0:04:15.13,0:04:16.57,Default,,0,0,0,,[Cái con hồ ly gian xảo đó,]
Dialogue: 0,0:04:16.77,0:04:19.91,Default,,0,0,0,,[uổng công mình luôn cầu nguyện cho nó\Nthể lực không đủ rồi gục ngã.]
Dialogue: 0,0:04:21.47,0:04:26.08,Default,,0,0,0,,[Chệt tiệt, mình chắc chắn\Nsẽ không thua tên Rukawa đó.]
Dialogue: 0,0:04:26.32,0:04:27.29,Default,,0,0,0,,Trước khi ăn cơm,
Dialogue: 0,0:04:27.40,0:04:29.26,Default,,0,0,0,,chúng ta hãy tập huấn đặc biệt\Ntăng cường thể lực đi.
Dialogue: 0,0:04:29.47,0:04:32.26,Default,,0,0,0,,Hanamichi, mày sao thế?
Dialogue: 0,0:04:39.38,0:04:41.04,Default,,0,0,0,,Tránh ra, chó ngoan không cản đường!
Dialogue: 0,0:04:41.16,0:04:42.66,Default,,0,0,0,,Bọn tôi đang tập bóng chày đó!
Dialogue: 0,0:04:42.66,0:04:43.54,Default,,0,0,0,,Bớt càm ràm đi.
Dialogue: 0,0:04:43.54,0:04:44.62,Default,,0,0,0,,Cậu làm gì vậy hả?
Dialogue: 0,0:04:45.37,0:04:46.34,Default,,0,0,0,,Muốn đánh nhau phải không?
Dialogue: 0,0:04:46.57,0:04:48.04,Default,,0,0,0,,- Cái gì?\N- Dừng lại!
Dialogue: 0,0:04:50.05,0:04:50.87,Default,,0,0,0,,Chết tiệt.
Dialogue: 0,0:04:50.87,0:04:52.95,Default,,0,0,0,,Mấy tên này, vậy mà lại dám đánh tao.
Dialogue: 0,0:04:53.03,0:04:53.84,Default,,0,0,0,,Để xem tao dạy dỗ bọn mày như thế nào!
Dialogue: 0,0:04:53.95,0:04:56.18,Default,,0,0,0,,Tên đó là Sakuragi của đội bóng rổ nhỉ?
Dialogue: 0,0:04:56.27,0:04:58.74,Default,,0,0,0,,Chết tiệt, tao phải giết mày!
Dialogue: 0,0:04:58.74,0:05:00.15,Default,,0,0,0,,Làm gì vậy hả, tôi có cố tình đâu!
Dialogue: 0,0:05:01.06,0:05:02.34,Default,,0,0,0,,Nó đang làm gì vậy?
Dialogue: 0,0:05:02.45,0:05:03.64,Default,,0,0,0,,Có vẻ thằng Sakuragi đó
Dialogue: 0,0:05:03.75,0:05:05.67,Default,,0,0,0,,thật sự đã tích tụ rất nhiều áp lực.
Dialogue: 0,0:05:05.82,0:05:07.06,Default,,0,0,0,,Nhưng thú vị thật đấy.
Dialogue: 0,0:05:07.20,0:05:08.54,Default,,0,0,0,,Làm tốt lắm, Hanamichi!
Dialogue: 0,0:05:08.63,0:05:09.59,Default,,0,0,0,,Cố lên, cố lên!
Dialogue: 0,0:05:10.96,0:05:14.20,Default,,0,0,0,,Quay lại!\NCái thằng này, để xem tao xử lý mày thế nào!
Dialogue: 0,0:05:14.30,0:05:15.75,Default,,0,0,0,,[Sakuragi.]
Dialogue: 0,0:05:15.78,0:05:18.15,Default,,0,0,0,,[Trường cấp ba Jousei - tỉnh Shizuoka]
Dialogue: 0,0:05:20.12,0:05:20.78,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:05:28.98,0:05:29.67,Default,,0,0,0,,[Đừng hòng ghi điểm.]
Dialogue: 0,0:05:32.67,0:05:33.64,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:05:34.79,0:05:35.50,Default,,0,0,0,,Mau tấn công!
Dialogue: 0,0:05:38.18,0:05:40.21,Default,,0,0,0,,[Akagi, hôm nay\Ntôi chắc chắn sẽ cho cậu biết mặt.]
Dialogue: 0,0:05:41.31,0:05:42.78,Default,,0,0,0,,[Hôm nay tôi cũng sẽ đánh bại cậu.]
Dialogue: 0,0:05:50.04,0:05:50.82,Default,,0,0,0,,Tốt lắm!
Dialogue: 0,0:05:52.01,0:05:54.30,Default,,0,0,0,,Mikoshiba,\Nbọn tôi vẫn chưa phát huy khả năng đâu.
Dialogue: 0,0:06:03.34,0:06:04.76,Default,,0,0,0,,Sao thế, hết sức rồi à?
Dialogue: 0,0:06:04.92,0:06:07.19,Default,,0,0,0,,Ném thêm 20 quả nữa mới được nghỉ.
Dialogue: 0,0:06:08.93,0:06:09.89,Default,,0,0,0,,Làm gì vậy?
Dialogue: 0,0:06:10.23,0:06:11.48,Default,,0,0,0,,Mày đừng có trừng tao.
Dialogue: 0,0:06:11.48,0:06:13.04,Default,,0,0,0,,Bọn tao làm như vậy\Ncũng vì muốn tốt cho mày thôi.
Dialogue: 0,0:06:15.32,0:06:17.54,Default,,0,0,0,,Sự mệt mỏi của cậu ấy đã lên đến mức cao nhất,
Dialogue: 0,0:06:17.65,0:06:19.10,Default,,0,0,0,,cơ thể không chịu được nữa\Ncũng là điều đương nhiên.
Dialogue: 0,0:06:19.27,0:06:21.89,Default,,0,0,0,,Hanamichi\Ncũng chỉ là người bình thường thôi.
Dialogue: 0,0:06:22.02,0:06:24.58,Default,,0,0,0,,Không còn cách nào nữa,\Nvậy thì nghỉ ngơi một lát đi.
Dialogue: 0,0:06:24.75,0:06:26.88,Default,,0,0,0,,Cứ vậy đi, tay em không nhấc nổi nữa.
Dialogue: 0,0:06:28.89,0:06:34.39,Default,,0,0,0,,Chắc bây giờ mọi người đang\Nđấu tập với trường cấp ba Jousei
Dialogue: 0,0:06:34.83,0:06:36.82,Default,,0,0,0,,Không biết hôm nay có thể thắng không nữa.
Dialogue: 0,0:06:44.72,0:06:46.19,Default,,0,0,0,,[Haruko lại suy nghĩ lung tung rồi.]
Dialogue: 0,0:06:46.30,0:06:48.12,Default,,0,0,0,,[Chắc chắn là lại nghĩ đến\Ncon hồ ly gian xảo đó.]
Dialogue: 0,0:06:48.71,0:06:49.56,Default,,0,0,0,,Bọn mày còn đang làm gì đó hả?
Dialogue: 0,0:06:49.67,0:06:50.75,Default,,0,0,0,,Đứng dậy đi,
Dialogue: 0,0:06:50.89,0:06:52.08,Default,,0,0,0,,hết thời gian nghỉ rồi!
Dialogue: 0,0:06:52.19,0:06:55.22,Default,,0,0,0,,Mày nói gì? Là chính mày nói muốn nghỉ mà.
Dialogue: 0,0:06:55.55,0:06:56.68,Default,,0,0,0,,Tao không cần biết.
Dialogue: 0,0:06:56.89,0:06:58.05,Default,,0,0,0,,Tóm lại thì tập luyện, mau tập luyện đi!
Dialogue: 0,0:07:07.03,0:07:10.62,Default,,0,0,0,,Em thật sự không thể chơi với Bố Già thầy nữa.
Dialogue: 0,0:07:10.74,0:07:12.04,Default,,0,0,0,,[Chơi?]
Dialogue: 0,0:07:14.08,0:07:15.38,Default,,0,0,0,,[Lúc càng mệt mỏi]
Dialogue: 0,0:07:15.50,0:07:16.73,Default,,0,0,0,,[thì càng phải chú ý đến nhịp điệu.]
Dialogue: 0,0:07:22.24,0:07:23.97,Default,,0,0,0,,Đúng là kim cương bất tử.
Dialogue: 0,0:07:24.18,0:07:24.97,Default,,0,0,0,,Tốt lắm!
Dialogue: 0,0:07:25.18,0:07:26.82,Default,,0,0,0,,Hanamichi, phải giữ vững như vậy đấy.
Dialogue: 0,0:07:26.99,0:07:29.96,Default,,0,0,0,,[Mình đang chơi sao? Chắc là vậy.]
Dialogue: 0,0:07:36.89,0:07:37.94,Default,,0,0,0,,Tốt lắm, tốt lắm.
Dialogue: 0,0:07:43.84,0:07:45.33,Default,,0,0,0,,Thêm một quả nữa nào.
Dialogue: 0,0:07:45.88,0:07:49.28,Default,,0,0,0,,[Ngày nào cũng có thể thấy được\Nsự tiến bộ rõ rệt,]
Dialogue: 0,0:07:49.58,0:07:51.58,Default,,0,0,0,,[không còn điều gì\Ncó thể làm người ta mong chờ hơn nữa.]
Dialogue: 0,0:07:55.10,0:07:56.33,Default,,0,0,0,,Tốt.
Dialogue: 0,0:07:57.85,0:07:59.95,Default,,0,0,0,,[Còn lại năm quả cuối cùng đấy Hanamichi.]
Dialogue: 0,0:08:02.14,0:08:03.85,Default,,0,0,0,,Hanamichi, mày làm sao thế?
Dialogue: 0,0:08:03.96,0:08:05.68,Default,,0,0,0,,Chết tiệt.
Dialogue: 0,0:08:05.92,0:08:07.28,Default,,0,0,0,,Sakuragi, cố lên!
Dialogue: 0,0:08:16.53,0:08:17.83,Default,,0,0,0,,Quả cuối cùng.
Dialogue: 0,0:08:18.67,0:08:20.90,Default,,0,0,0,,Hanamichi, quả cuối cùng\Nchắc chắn phải vào đấy.
Dialogue: 0,0:08:26.05,0:08:28.47,Default,,0,0,0,,[Chắc chắn mình phải ném trúng.]
Dialogue: 0,0:08:36.68,0:08:39.02,Default,,0,0,0,,- Tuyệt.\N- Làm tốt lắm, Hanamichi.
Dialogue: 0,0:08:39.25,0:08:41.47,Default,,0,0,0,,Ném tốt lắm, lại vào nữa rồi.
Dialogue: 0,0:08:41.66,0:08:44.26,Default,,0,0,0,,Sakuragi, hôm nay rất cố gắng.
Dialogue: 0,0:08:44.50,0:08:45.29,Default,,0,0,0,,Vâng ổn ạ.
Dialogue: 0,0:08:45.46,0:08:47.71,Default,,0,0,0,,Được rồi, tiếp theo\Nhãy tập cơ bản đi, Hanamichi.
Dialogue: 0,0:08:47.82,0:08:49.38,Default,,0,0,0,,Lại là tập cơ bản?
Dialogue: 0,0:08:54.12,0:08:58.06,Default,,0,0,0,,- Hanamichi!\N- Phấn chấn lên nào, mày sao vậy? - Sakuragi.
Dialogue: 0,0:08:58.74,0:09:00.60,Default,,0,0,0,,Hanamichi, mày đang làm gì vậy?
Dialogue: 0,0:09:00.77,0:09:03.00,Default,,0,0,0,,Mày mới xong một nửa bài tập ném bóng thôi đó.
Dialogue: 0,0:09:03.88,0:09:04.90,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:09:05.51,0:09:08.54,Default,,0,0,0,,Sau khi tập xong thì chúng ta\Ncùng đi hội chùa chơi, được không nào?
Dialogue: 0,0:09:10.19,0:09:12.75,Default,,0,0,0,,Những ngày qua cậu đã cố gắng như vậy,
Dialogue: 0,0:09:12.83,0:09:15.13,Default,,0,0,0,,thỉnh thoảng chơi một lần,\Nthả lỏng tâm trạng cũng tốt.
Dialogue: 0,0:09:15.43,0:09:16.77,Default,,0,0,0,,Được không? Đi nha.
Dialogue: 0,0:09:18.04,0:09:19.50,Default,,0,0,0,,[Chẳng lẽ đây là...]
Dialogue: 0,0:09:19.77,0:09:22.33,Default,,0,0,0,,[Chẳng lẽ là Haruko đang mời mình đi hẹn hò?]
Dialogue: 0,0:09:22.54,0:09:23.68,Default,,0,0,0,,[Chắc là vậy.]
Dialogue: 0,0:09:27.45,0:09:28.42,Default,,0,0,0,,[Không cần biết tập cơ bản gì,]
Dialogue: 0,0:09:28.50,0:09:30.21,Default,,0,0,0,,[mình sẽ làm không chậm trễ.]
Dialogue: 0,0:09:31.43,0:09:34.80,Default,,0,0,0,,Lại sống lại, không hổ là động vật đơn bào.
Dialogue: 0,0:09:53.65,0:09:54.92,Default,,0,0,0,,Tôi lấy mười cái takoyaki.
Dialogue: 0,0:09:55.19,0:09:56.58,Default,,0,0,0,,Một cây kẹo bông gòn.
Dialogue: 0,0:09:56.74,0:09:58.17,Default,,0,0,0,,Thêm bốn cây kẹo hạnh nhân.
Dialogue: 0,0:10:00.54,0:10:04.64,Default,,0,0,0,,[Chắc Haruko mặc Yukata sẽ hợp lắm đây.]
Dialogue: 0,0:10:06.35,0:10:07.42,Default,,0,0,0,,[Haruko...]
Dialogue: 0,0:10:12.39,0:10:13.94,Default,,0,0,0,,[Tại sao mình lại thấy mặt của Tinh Tinh Bự?]
Dialogue: 0,0:10:15.06,0:10:16.89,Default,,0,0,0,,[Chắc là mình mệt quá rồi.]
Dialogue: 0,0:10:17.07,0:10:18.19,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:10:19.75,0:10:20.77,Default,,0,0,0,,Ở đây này.
Dialogue: 0,0:10:21.18,0:10:22.05,Default,,0,0,0,,Haruko.
Dialogue: 0,0:10:23.32,0:10:25.52,Default,,0,0,0,,Tốt quá, Haruko không thay đổi.
Dialogue: 0,0:10:25.79,0:10:27.31,Default,,0,0,0,,Không, không có gì.
Dialogue: 0,0:10:29.02,0:10:30.98,Default,,0,0,0,,Cái này muốn tặng cho cậu đấy, Haruko.
Dialogue: 0,0:10:31.10,0:10:32.60,Default,,0,0,0,,Sakuragi, cậu mua nhiều thế.
Dialogue: 0,0:10:32.73,0:10:35.56,Default,,0,0,0,,Không phải là cậu\Ndùng hết tiền tiêu vặt rồi đấy chứ?
Dialogue: 0,0:10:35.70,0:10:37.67,Default,,0,0,0,,Không có gì, chút này có là gì đâu.
Dialogue: 0,0:10:39.07,0:10:41.99,Default,,0,0,0,,Haruko, để cậu đợi lâu rồi nhỉ?
Dialogue: 0,0:10:42.11,0:10:43.87,Default,,0,0,0,,Mấy cậu đến làm gì vậy?
Dialogue: 0,0:10:44.00,0:10:46.28,Default,,0,0,0,,Sakuragi, là tôi rủ các cậu ấy đến đó,\Nkhông được à?
Dialogue: 0,0:10:46.41,0:10:48.68,Default,,0,0,0,,Không, đâu có.
Dialogue: 0,0:10:49.49,0:10:53.65,Default,,0,0,0,,Tôi còn mời cả mấy người Yohei nữa\Nnhưng hình như bọn họ bận mất rồi.
Dialogue: 0,0:10:55.36,0:10:59.49,Default,,0,0,0,,[May mà mình đã đe dọa bọn nó là\Nđừng có đến làm kỳ đà.]
Dialogue: 0,0:10:59.67,0:11:00.98,Default,,0,0,0,,Kẹo bông gòn à?
Dialogue: 0,0:11:01.13,0:11:02.74,Default,,0,0,0,,Mình mới muốn mua để ăn đấy.
Dialogue: 0,0:11:02.84,0:11:04.29,Default,,0,0,0,,Takoyaki có vẻ rất ngon.
Dialogue: 0,0:11:04.43,0:11:06.70,Default,,0,0,0,,Đồ ngốc, những thứ này\Ntôi mua để cho Haruko đó!
Dialogue: 0,0:11:06.90,0:11:09.39,Default,,0,0,0,,Haruko, bọn mình ăn chung được không?
Dialogue: 0,0:11:10.91,0:11:11.67,Default,,0,0,0,,Cậu xem đi, Sakuragi.
Dialogue: 0,0:11:11.78,0:11:13.80,Default,,0,0,0,,Như vậy thì chắc là cậu không có ý kiến gì nhỉ?
Dialogue: 0,0:11:13.87,0:11:14.88,Default,,0,0,0,,Im đi!
Dialogue: 0,0:11:14.98,0:11:17.47,Default,,0,0,0,,So với cho các cậu ăn thì còn chẳng bằng\Nmình ăn hết một mình.
Dialogue: 0,0:11:18.49,0:11:20.12,Default,,0,0,0,,Sakuragi, cậu...
Dialogue: 0,0:11:22.26,0:11:23.79,Default,,0,0,0,,Đồ con trai dã man.
Dialogue: 0,0:11:24.11,0:11:27.59,Default,,0,0,0,,- Cho cậu ta ở riêng với Haruko quá nguy hiểm.\N- Đúng vậy.
Dialogue: 0,0:11:27.70,0:11:28.80,Default,,0,0,0,,Haruko ngu ngơ quá.
Dialogue: 0,0:11:28.93,0:11:30.90,Default,,0,0,0,,Chúng ta phải bảo vệ cậu ấy cho tốt mới được.
Dialogue: 0,0:11:31.60,0:11:33.97,Default,,0,0,0,,[Mấy cái con kỳ đà chết tiệt đó\Nvẫn chưa cút đi à?]
Dialogue: 0,0:11:59.43,0:12:02.46,Default,,0,0,0,,Lạ thật, ban nãy còn đi chung mà.
Dialogue: 0,0:12:02.62,0:12:05.45,Default,,0,0,0,,Mình nghĩ 80% là bị Sakuragi bắt cóc rồi.
Dialogue: 0,0:12:05.57,0:12:07.36,Default,,0,0,0,,Mình nghĩ chắc bọn họ chưa đi xa đâu,
Dialogue: 0,0:12:07.49,0:12:08.16,Default,,0,0,0,,mau đi tìm thôi.
Dialogue: 0,0:12:08.16,0:12:08.80,Default,,0,0,0,,Cũng đúng.
Dialogue: 0,0:12:09.32,0:12:11.29,Default,,0,0,0,,Haruko, đến bên này nè, nhanh lên, nhanh lên.
Dialogue: 0,0:12:11.39,0:12:11.86,Default,,0,0,0,,Nhưng...
Dialogue: 0,0:12:12.69,0:12:13.49,Default,,0,0,0,,Đừng để ý đến mấy người đó.
Dialogue: 0,0:12:13.60,0:12:14.73,Default,,0,0,0,,Đừng để ý đến bọn họ,
Dialogue: 0,0:12:14.85,0:12:17.34,Default,,0,0,0,,dù sao thì bọn họ cũng tự chơi được mà.
Dialogue: 0,0:12:17.45,0:12:19.68,Default,,0,0,0,,[Tốt, kế hoạch thành công.]
Dialogue: 0,0:12:19.84,0:12:21.90,Default,,0,0,0,,[Tiếp theo là lúc mình ở riêng với Haruko.]
Dialogue: 0,0:12:24.51,0:12:25.57,Default,,0,0,0,,Haruko.
Dialogue: 0,0:12:29.01,0:12:30.38,Default,,0,0,0,,Ngoan, đừng khóc.
Dialogue: 0,0:12:31.02,0:12:32.01,Default,,0,0,0,,Haruko.
Dialogue: 0,0:12:32.33,0:12:33.16,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:12:33.46,0:12:35.58,Default,,0,0,0,,Haruko, cậu sao vậy?
Dialogue: 0,0:12:35.73,0:12:38.72,Default,,0,0,0,,Cô bé này mãi vẫn không vớt được cá vàng.
Dialogue: 0,0:12:40.34,0:12:42.05,Default,,0,0,0,,Đừng có khóc lóc nữa,
Dialogue: 0,0:12:42.05,0:12:44.31,Default,,0,0,0,,còn như vậy thì\Nanh không muốn đưa em ra ngoài đâu.
Dialogue: 0,0:12:44.52,0:12:47.72,Default,,0,0,0,,Đau đầu thật đấy,\Nkhả năng vớt cá vàng của mình cũng tệ lắm.
Dialogue: 0,0:12:47.98,0:12:50.31,Default,,0,0,0,,Chuyện nhỏ thế này thì cứ để mình lo.
Dialogue: 0,0:12:50.55,0:12:53.16,Default,,0,0,0,,Sakuragi giỏi vớt cá vàng lắm à?
Dialogue: 0,0:12:53.40,0:12:54.73,Default,,0,0,0,,Mình là thiên tài đó.
Dialogue: 0,0:12:56.45,0:12:57.53,Default,,0,0,0,,Ông chủ, cho một cái.
Dialogue: 0,0:12:57.67,0:12:58.62,Default,,0,0,0,,Được.
Dialogue: 0,0:13:00.58,0:13:02.77,Default,,0,0,0,,Bắt đầu vớt từ con nào thì được đây?
Dialogue: 0,0:13:06.00,0:13:06.92,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:13:06.92,0:13:08.09,Default,,0,0,0,,Vớt được rồi!
Dialogue: 0,0:13:10.39,0:13:14.15,Default,,0,0,0,,Chết tiệt. Tại mày cả đấy, làm tao mất mặt.
Dialogue: 0,0:13:15.65,0:13:16.62,Default,,0,0,0,,Đồ ngu.
Dialogue: 0,0:13:17.80,0:13:19.38,Default,,0,0,0,,Tao sẽ không tha cho mày đâu!
Dialogue: 0,0:13:19.47,0:13:20.76,Default,,0,0,0,,Ông chủ, một cái nữa.
Dialogue: 0,0:13:20.89,0:13:21.72,Default,,0,0,0,,Cảm ơn đã ghé thăm.
Dialogue: 0,0:13:25.93,0:13:26.97,Default,,0,0,0,,Một cái nữa.
Dialogue: 0,0:13:27.11,0:13:27.73,Default,,0,0,0,,Được.
Dialogue: 0,0:13:35.85,0:13:37.08,Default,,0,0,0,,Được, được.
Dialogue: 0,0:13:38.75,0:13:39.74,Default,,0,0,0,,Tiếc quá đi.
Dialogue: 0,0:13:40.15,0:13:42.45,Default,,0,0,0,,Chết tiệt, một cái nữa.
Dialogue: 0,0:13:42.58,0:13:43.76,Default,,0,0,0,,Ông chủ, tôi muốn một cái nữa.
Dialogue: 0,0:13:43.88,0:13:45.28,Default,,0,0,0,,Cảm ơn, cảm ơn.
Dialogue: 0,0:13:47.22,0:13:49.14,Default,,0,0,0,,Chết tiệt, hết tiền mất rồi.
Dialogue: 0,0:13:49.25,0:13:50.52,Default,,0,0,0,,Cho tôi nợ trước đi, được không?
Dialogue: 0,0:13:50.52,0:13:51.83,Default,,0,0,0,,Lần sau sẽ trả lại cho.
Dialogue: 0,0:13:51.83,0:13:53.35,Default,,0,0,0,,Không được, chúng tôi không ghi sổ.
Dialogue: 0,0:13:53.35,0:13:54.48,Default,,0,0,0,,Cho tôi nợ đi, cho tôi nợ trước đi mà.
Dialogue: 0,0:13:54.59,0:13:55.65,Default,,0,0,0,,Cái tên chết tiệt này.
Dialogue: 0,0:13:55.77,0:13:57.75,Default,,0,0,0,,Chết tiệt, tao chắc chắn phải vớt được mày.
Dialogue: 0,0:13:57.84,0:13:59.10,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:13:59.49,0:14:00.25,Default,,0,0,0,,Đồ ngu.
Dialogue: 0,0:14:00.46,0:14:03.54,Default,,0,0,0,,- Mày vậy mà lại mắng tao?\N- Sakuragi, dừng lại đi.
Dialogue: 0,0:14:03.66,0:14:04.75,Default,,0,0,0,,Mau dừng lại, mau dừng lại.
Dialogue: 0,0:14:04.86,0:14:09.82,Default,,0,0,0,,Cậu thích con cá vàng đó vậy à?\NĐể tôi tặng cho cậu.
Dialogue: 0,0:14:12.44,0:14:15.09,Default,,0,0,0,,Tốt quá rồi, các em phải chăm sóc cẩn thận đấy.
Dialogue: 0,0:14:16.19,0:14:17.38,Default,,0,0,0,,Mình đúng là một thiên tài.
Dialogue: 0,0:14:19.07,0:14:21.54,Default,,0,0,0,,Anh à, cho anh cái này nè.
Dialogue: 0,0:14:23.35,0:14:24.68,Default,,0,0,0,,Anh, chị,
Dialogue: 0,0:14:24.92,0:14:26.69,Default,,0,0,0,,cảm ơn hai người.
Dialogue: 0,0:14:26.85,0:14:27.82,Default,,0,0,0,,Tạm biệt ạ.
Dialogue: 0,0:14:29.43,0:14:32.37,Default,,0,0,0,,Cẩn thận một chút,\Nem xem con cá vàng giật mình kìa.
Dialogue: 0,0:14:32.69,0:14:34.56,Default,,0,0,0,,Nào, nắm tay anh đi.
Dialogue: 0,0:14:42.68,0:14:43.51,Default,,0,0,0,,Thật là,
Dialogue: 0,0:14:43.51,0:14:44.64,Default,,0,0,0,,sao em lại ngốc như vậy hả?
Dialogue: 0,0:14:44.85,0:14:46.66,Default,,0,0,0,,Em xem đi, rách da rồi này.
Dialogue: 0,0:14:46.78,0:14:48.58,Default,,0,0,0,,Được rồi, em về nhà đi.
Dialogue: 0,0:14:48.85,0:14:50.91,Default,,0,0,0,,Không đâu, anh, em vẫn muốn chơi.
Dialogue: 0,0:14:52.96,0:14:54.45,Default,,0,0,0,,Anh, bắt lấy nè.
Dialogue: 0,0:15:01.73,0:15:04.17,Default,,0,0,0,,- Tốt.\N- Anh giỏi quá, giỏi quá.
Dialogue: 0,0:15:04.48,0:15:08.11,Default,,0,0,0,,Anh tôi bắt đầu thích bóng rổ từ khi ấy,
Dialogue: 0,0:15:08.51,0:15:09.64,Default,,0,0,0,,làm người khác thật hâm mộ.
Dialogue: 0,0:15:10.57,0:15:12.18,Default,,0,0,0,,Sau khi lên cấp hai,
Dialogue: 0,0:15:12.29,0:15:14.55,Default,,0,0,0,,thấy khả năng chơi bóng của anh\Ncàng lúc càng tốt,
Dialogue: 0,0:15:14.72,0:15:17.49,Default,,0,0,0,,xem anh ấy chơi bóng\Ncũng trở thành một sở thích của mình.
Dialogue: 0,0:15:23.10,0:15:26.06,Default,,0,0,0,,Bây giờ, đội bóng của anh\Nđã thành hạng hai của tỉnh Kanagawa,
Dialogue: 0,0:15:26.16,0:15:27.67,Default,,0,0,0,,lại còn giành được tư cách\Ntham gia giải đấu toàn quốc.
Dialogue: 0,0:15:27.75,0:15:29.90,Default,,0,0,0,,Anh đúng là rất giỏi.
Dialogue: 0,0:15:30.48,0:15:34.85,Default,,0,0,0,,Tôi rất vui vì có thể luôn cổ vũ anh\Ntiếp tục chơi bóng.
Dialogue: 0,0:15:35.05,0:15:38.82,Default,,0,0,0,,Phải, Tinh Tinh Bự\Nlà người hạnh phúc nhất trên đời.
Dialogue: 0,0:15:39.37,0:15:41.43,Default,,0,0,0,,[Mà Sakuragi mình]
Dialogue: 0,0:15:41.77,0:15:45.03,Default,,0,0,0,,[cuối cùng cũng có thể ở riêng với Haruko.]
Dialogue: 0,0:15:46.12,0:15:47.34,Default,,0,0,0,,Bây giờ không chỉ có anh,
Dialogue: 0,0:15:47.45,0:15:51.83,Default,,0,0,0,,tôi đã có thêm thú vui cổ vũ cho cậu.
Dialogue: 0,0:15:51.93,0:15:53.32,Default,,0,0,0,,Cậu ủng hộ mình ư?
Dialogue: 0,0:15:53.43,0:15:56.30,Default,,0,0,0,,Tôi nghĩ có lẽ nhóm Yohei\Ncũng có tâm trạng như vậy,
Dialogue: 0,0:15:57.11,0:15:59.96,Default,,0,0,0,,không thì sao mấy cậu ấy lại đến giúp chứ.
Dialogue: 0,0:16:00.07,0:16:02.80,Default,,0,0,0,,Không có đâu, bọn nó\Nđến vì ôm tâm trạng hóng chuyện đó.
Dialogue: 0,0:16:02.93,0:16:04.58,Default,,0,0,0,,Không có chuyện đó đâu.
Dialogue: 0,0:16:04.72,0:16:05.75,Default,,0,0,0,,Là vậy sao?
Dialogue: 0,0:16:06.70,0:16:08.80,Default,,0,0,0,,[Cơ hội như thế này không có lần thứ hai nữa.]
Dialogue: 0,0:16:08.90,0:16:11.30,Default,,0,0,0,,[Đây là cơ hội lớn nhất của Sakuragi mình.]
Dialogue: 0,0:16:11.83,0:16:14.36,Default,,0,0,0,,[Mình phải nhân lúc này tỏ tình với cậu ấy.]
Dialogue: 0,0:16:21.11,0:16:23.40,Default,,0,0,0,,Haruko, không giấu gì cậu...
Dialogue: 0,0:16:26.92,0:16:27.97,Default,,0,0,0,,Xin lỗi.
Dialogue: 0,0:16:29.95,0:16:31.51,Default,,0,0,0,,Xin lỗi, Sakuragi.
Dialogue: 0,0:16:32.12,0:16:34.75,Default,,0,0,0,,Xin... xin lỗi?
Dialogue: 0,0:16:35.38,0:16:36.85,Default,,0,0,0,,Đúng là vậy mà.
Dialogue: 0,0:16:37.09,0:16:39.62,Default,,0,0,0,,Cậu đúng là có ý này.
Dialogue: 0,0:16:39.62,0:16:44.72,Default,,0,0,0,,Sakuragi...\NChẳng lẽ mình đánh mạnh lắm à?
Dialogue: 0,0:16:45.77,0:16:47.33,Default,,0,0,0,,Mình bị Haruko đá rồi.
Dialogue: 0,0:16:47.49,0:16:50.51,Default,,0,0,0,,Đúng là Haruko thích con hồ ly kia.
Dialogue: 0,0:16:50.62,0:16:52.05,Default,,0,0,0,,Chết tiệt.
Dialogue: 0,0:16:53.60,0:16:55.20,Default,,0,0,0,,Hình như ban nãy là Sakuragi.
Dialogue: 0,0:16:55.32,0:16:56.98,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:16:58.67,0:16:59.73,Default,,0,0,0,,Haruko.
Dialogue: 0,0:17:00.07,0:17:01.54,Default,,0,0,0,,Sakuragi, cậu ấy...
Dialogue: 0,0:17:05.82,0:17:06.65,Default,,0,0,0,,[Dù có thế nào đi nữa]
Dialogue: 0,0:17:06.81,0:17:08.35,Default,,0,0,0,,[thì cậu ấy như vậy cũng thật quá đáng.]
Dialogue: 0,0:17:08.46,0:17:10.41,Default,,0,0,0,,[Sao lại thật sự đánh người ta chứ?]
Dialogue: 0,0:17:10.89,0:17:12.18,Default,,0,0,0,,[Thật quá đáng.]
Dialogue: 0,0:17:14.10,0:17:15.59,Default,,0,0,0,,Nhìn đi, còn chảy cả máu nữa.
Dialogue: 0,0:17:19.17,0:17:20.50,Default,,0,0,0,,[Muỗi?]
Dialogue: 0,0:17:21.04,0:17:25.74,Default,,0,0,0,,Thì ra là vậy. Lúc đó mình bị muỗi cắn, cậu ấy...
Dialogue: 0,0:17:26.48,0:17:29.52,Default,,0,0,0,,Thôi xong, vậy là mình hiểu nhầm cậu ấy rồi.
Dialogue: 0,0:17:29.66,0:17:31.63,Default,,0,0,0,,Haruko.
Dialogue: 0,0:17:32.43,0:17:33.94,Default,,0,0,0,,Haruko.
Dialogue: 0,0:17:35.09,0:17:37.00,Default,,0,0,0,,Một lát chắc là không sao đâu nhỉ.
Dialogue: 0,0:17:37.08,0:17:38.54,Default,,0,0,0,,Hẹn hò với bọn anh thử đi.
Dialogue: 0,0:17:38.74,0:17:39.71,Default,,0,0,0,,Không cần đâu.
Dialogue: 0,0:17:39.98,0:17:42.57,Default,,0,0,0,,Sao lại nói những lời vô tình như vậy chứ.
Dialogue: 0,0:17:42.72,0:17:44.85,Default,,0,0,0,,Chơi cho vui đi, thế nào?
Dialogue: 0,0:17:51.26,0:17:52.78,Default,,0,0,0,,Cô em...
Dialogue: 0,0:17:53.18,0:17:54.17,Default,,0,0,0,,Mày là ai?
Dialogue: 0,0:17:56.84,0:17:58.60,Default,,0,0,0,,Sứ giả của chính nghĩa đã đến.
Dialogue: 0,0:17:58.69,0:18:00.09,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:18:01.79,0:18:03.85,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:18:05.60,0:18:08.59,Default,,0,0,0,,Không ngờ bài tập cơ bản cũng có chỗ dùng.
Dialogue: 0,0:18:09.82,0:18:10.97,Default,,0,0,0,,Sakuragi, không được.
Dialogue: 0,0:18:11.11,0:18:12.73,Default,,0,0,0,,Bây giờ đang là thời điểm quan trọng,\Ncậu không được đánh nhau.
Dialogue: 0,0:18:12.97,0:18:13.94,Default,,0,0,0,,Mình có đeo mặt nạ,
Dialogue: 0,0:18:14.14,0:18:15.30,Default,,0,0,0,,bọn nó không nhận ra mình đâu.
Dialogue: 0,0:18:15.81,0:18:16.47,Default,,0,0,0,,Nhưng...
Dialogue: 0,0:18:16.68,0:18:18.15,Default,,0,0,0,,Đùa gì vậy chứ.
Dialogue: 0,0:18:18.27,0:18:20.76,Default,,0,0,0,,Mày xem thường bọn tao phải không?\NAnh em, lên nào.
Dialogue: 0,0:18:20.93,0:18:25.78,Default,,0,0,0,,- Dừng lại!\N- Quân đoàn của sứ giả chính nghĩa đến rồi đây!
Dialogue: 0,0:18:26.27,0:18:27.66,Default,,0,0,0,,Đám này muốn làm gì vậy?
Dialogue: 0,0:18:27.76,0:18:30.02,Default,,0,0,0,,Nếu muốn đánh nhau thì cứ để cho bọn tao.
Dialogue: 0,0:18:31.64,0:18:33.37,Default,,0,0,0,,Chuẩn bị chiến đấu.
Dialogue: 0,0:18:36.45,0:18:37.52,Default,,0,0,0,,Mày dám xem thường bọn tao?
Dialogue: 0,0:18:38.81,0:18:39.97,Default,,0,0,0,,Bây giờ tao sẽ cho mày biết mùi\Nsức mạnh của tao.
Dialogue: 0,0:18:40.32,0:18:41.44,Default,,0,0,0,,Xem thường tao à?
Dialogue: 0,0:18:42.08,0:18:44.49,Default,,0,0,0,,Bắt nạt con gái là hành vi khốn nạn.
Dialogue: 0,0:18:48.92,0:18:50.00,Default,,0,0,0,,Trừng trị cái ác.
Dialogue: 0,0:18:55.66,0:18:57.25,Default,,0,0,0,,Trận chiến kết thúc.
Dialogue: 0,0:18:57.50,0:19:01.57,Default,,0,0,0,,Trái Đất đã trở lại hòa bình như vậy đấy.
Dialogue: 0,0:19:02.80,0:19:04.84,Default,,0,0,0,,Đùa thôi.
Dialogue: 0,0:19:04.96,0:19:06.93,Default,,0,0,0,,Mình đoán đúng mà, thật sự là nhóm Yohei.
Dialogue: 0,0:19:07.13,0:19:09.23,Default,,0,0,0,,Bọn mày lại đến đây làm gì hả?
Dialogue: 0,0:19:09.33,0:19:10.61,Default,,0,0,0,,Mày không biết ơn quá đấy.
Dialogue: 0,0:19:10.74,0:19:13.49,Default,,0,0,0,,Mày không chỉ bóc lột\Ntiền tiêu vặt ít đến đáng thương của bọn tao.
Dialogue: 0,0:19:13.62,0:19:15.52,Default,,0,0,0,,Mà còn một mình tận hưởng. Mày hèn quá đấy.
Dialogue: 0,0:19:15.58,0:19:17.26,Default,,0,0,0,,Đúng, thằng khốn này,\Nkhông thể tha thứ cho mày.
Dialogue: 0,0:19:17.42,0:19:18.61,Default,,0,0,0,,Các cậu ấy nói đúng đó,
Dialogue: 0,0:19:18.71,0:19:20.51,Default,,0,0,0,,mọi người cùng đi chơi sẽ vui hơn.
Dialogue: 0,0:19:20.62,0:19:23.08,Default,,0,0,0,,Cậu nói có phải không, Sakuragi?
Dialogue: 0,0:19:23.17,0:19:24.45,Default,,0,0,0,,Là vậy sao?
Dialogue: 0,0:19:25.41,0:19:27.21,Default,,0,0,0,,[Mấy cái con kì đà đáng ghét này.]
Dialogue: 0,0:19:27.33,0:19:29.53,Default,,0,0,0,,Huấn luyện viên Anzai\Ncòn tặng quà hỏi thăm cho chúng ta nữa,
Dialogue: 0,0:19:29.53,0:19:31.68,Default,,0,0,0,,mọi người cùng đến chơi đi.
Dialogue: 0,0:19:31.85,0:19:33.37,Default,,0,0,0,,Cậu nói huấn luyện viên Anzai à?
Dialogue: 0,0:19:33.48,0:19:34.83,Default,,0,0,0,,Tuyệt quá.
Dialogue: 0,0:19:34.93,0:19:37.75,Default,,0,0,0,,Không ngờ huấn luyện viên Anzai\Nlại biết chăm sóc như vậy.
Dialogue: 0,0:19:37.89,0:19:39.90,Default,,0,0,0,,[Một đám thích quấy rối.]
Dialogue: 0,0:19:44.57,0:19:46.10,Default,,0,0,0,,Đẹp quá.
Dialogue: 0,0:19:46.24,0:19:47.26,Default,,0,0,0,,Đúng, rất đẹp.
Dialogue: 0,0:19:47.51,0:19:50.20,Default,,0,0,0,,- Đẹp quá.\N- Lại lần nữa nào.
Dialogue: 0,0:19:51.23,0:19:53.59,Default,,0,0,0,,[Như là mấy nhóc quỷ, có gì đáng ngạc nhiên đâu.]
Dialogue: 0,0:19:55.05,0:19:56.88,Default,,0,0,0,,[Bọn mày cản trở quá đi.]
Dialogue: 0,0:19:59.38,0:20:01.44,Default,,0,0,0,,Sakuragi, lại có muỗi này.
Dialogue: 0,0:20:05.96,0:20:08.49,Default,,0,0,0,,Haruko, đánh mình mạnh như ban nãy ấy,
Dialogue: 0,0:20:08.61,0:20:10.55,Default,,0,0,0,,lần này mình sẽ không hiểu nhầm đâu.
Dialogue: 0,0:20:10.83,0:20:11.46,Default,,0,0,0,,Hiểu nhầm?
Dialogue: 0,0:20:11.93,0:20:14.38,Default,,0,0,0,,Không, cậu đừng giận,
Dialogue: 0,0:20:14.51,0:20:16.10,Default,,0,0,0,,cứ đánh mình mạnh vào, mình không để ý đâu, nào.
Dialogue: 0,0:20:18.21,0:20:20.08,Default,,0,0,0,,Vậy thì bọn tao không khách sáo đâu.
Dialogue: 0,0:20:22.65,0:20:23.95,Default,,0,0,0,,Ơ, chạy mất rồi.
Dialogue: 0,0:20:24.29,0:20:27.21,Default,,0,0,0,,Chết tiệt, bọn mày làm gì vậy hả?
Dialogue: 0,0:20:27.37,0:20:29.49,Default,,0,0,0,,Là mày nói bọn tao đừng khách sáo,\Nđánh mày mạnh vào mà.
Dialogue: 0,0:20:29.59,0:20:32.11,Default,,0,0,0,,Tao có nói bọn mày đánh đâu,\Ncái đám chết tiệt này.
Dialogue: 0,0:20:34.59,0:20:39.09,Default,,0,0,0,,[Anh à, Sakuragi vẫn luôn tập luyện\Nmột cách tràn đầy sức sống.]
Dialogue: 0,0:20:39.63,0:20:43.21,Default,,0,0,0,,[Cách mục tiêu ném rổ 20 nghìn lần]
Dialogue: 0,0:20:43.30,0:20:44.83,Default,,0,0,0,,[chỉ còn một nửa thôi.]
Dialogue: 0,0:20:48.59,0:20:55.91,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:20:56.39,0:21:03.45,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:21:13.88,0:21:20.54,Default,,0,0,0,,♫ Từng một lòng muốn thực hiện\Nnhững ước mơ xưa cũ ♫
Dialogue: 0,0:21:21.20,0:21:25.76,Default,,0,0,0,,♫ Cho đến hôm nay vẫn chói mắt như thế ♫
Dialogue: 0,0:21:28.44,0:21:35.99,Default,,0,0,0,,♫ Cho dù tâm tình đầy sự bất an ♫
Dialogue: 0,0:21:36.11,0:21:40.10,Default,,0,0,0,,♫ Tôi vẫn vững tin\Nvới lựa chọn của chính mình ♫
Dialogue: 0,0:21:42.33,0:21:49.07,Default,,0,0,0,,♫ Thích vẻ mặt thuần khiết\Nkhông điểm trang gì của cậu ♫
Dialogue: 0,0:21:49.21,0:21:55.11,Default,,0,0,0,,♫ Nếu một ngày nó thay đổi,\Nsẽ làm người ta thấy đau lòng lắm ♫
Dialogue: 0,0:21:56.06,0:22:01.68,Default,,0,0,0,,♫ Thời niên thiếu đã từng luôn lấp lánh ♫
Dialogue: 0,0:22:01.77,0:22:04.21,Default,,0,0,0,,♫ Đôi mắt của cậu, hỡi bạn tôi ♫
Dialogue: 0,0:22:04.54,0:22:11.06,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:22:11.09,0:22:19.00,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:22:21.54,0:22:22.61,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:24.89,0:22:27.50,Default,,0,0,0,,Giày bóng rổ rách rồi kìa, Sakuragi.
Dialogue: 0,0:22:28.16,0:22:29.43,Default,,0,0,0,,Giỏi thật đấy,
Dialogue: 0,0:22:29.57,0:22:31.07,Default,,0,0,0,,mới mấy tháng mà đã rách,
Dialogue: 0,0:22:31.20,0:22:33.43,Default,,0,0,0,,chứng tỏ rằng\Ncậu tập luyện thật sự rất vất vả.
Dialogue: 0,0:22:33.57,0:22:36.33,Default,,0,0,0,,Đâu có, hình như đôi giày này hơi nhỏ.
Dialogue: 0,0:22:36.45,0:22:39.19,Default,,0,0,0,,Đến chỗ ông chủ ria mép lần trước\Nđổi đôi khác đi.
Dialogue: 0,0:22:39.19,0:22:42.43,Default,,0,0,0,,Không được đâu Sakuragi,\Nphải trả tiền đàng hoàng đó.
Dialogue: 0,0:22:42.43,0:22:44.75,Default,,0,0,0,,Vậy à? Thế thì đưa 100 yên đi.
Dialogue: 0,0:22:45.45,0:22:48.59,Default,,0,0,0,,"Cao thủ bóng rổ: Giày bóng rổ II."
Dialogue: 0,0:22:48.71,0:22:49.88,Default,,0,0,0,,Đừng bỏ qua đấy.
