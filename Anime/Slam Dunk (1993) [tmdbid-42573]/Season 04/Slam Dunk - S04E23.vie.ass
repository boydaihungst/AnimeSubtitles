Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.64,0:00:20.66,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.75,0:00:24.00,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.83,0:00:30.35,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.58,0:00:36.62,Default,,0,0,0,,♫ Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.54,0:00:44.38,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.18,0:00:51.18,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.37,0:00:57.18,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.27,0:01:03.25,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.34,0:01:10.08,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:14.02,0:01:19.97,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:20.09,0:01:26.12,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.26,0:01:32.03,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:32.13,0:01:40.53,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:56.22,0:01:59.51,Default,,0,0,0,,[Trận đấu giữa Shohoku và đội kết hợp\Ngiữa Shoyo, Ryonan đã vào nửa trận sau,]
Dialogue: 0,0:01:59.64,0:02:01.05,Default,,0,0,0,,[khi còn mười phút,]
Dialogue: 0,0:02:01.22,0:02:03.58,Default,,0,0,0,,[Shohoku đã rút ngắn khoảng cách\Nchỉ còn sáu điểm.]
Dialogue: 0,0:02:04.74,0:02:05.43,Default,,0,0,0,,[Chính lúc này,]
Dialogue: 0,0:02:10.10,0:02:11.12,Default,,0,0,0,,[Sử dụng đầu gối.]
Dialogue: 0,0:02:14.84,0:02:16.31,Default,,0,0,0,,[Dùng sức mạnh của cổ tay.]
Dialogue: 0,0:02:18.54,0:02:19.91,Default,,0,0,0,,[Nâng cao quả bóng lên]
Dialogue: 0,0:02:19.93,0:02:21.88,Default,,0,0,0,,[khiến quả bóng tạo ra một đường cung\Ntrên không trung.]
Dialogue: 0,0:02:22.61,0:02:24.23,Default,,0,0,0,,[Ném ra ngoài]
Dialogue: 0,0:02:24.50,0:02:25.84,Default,,0,0,0,,[với tiết tấu cố định.]
Dialogue: 0,0:02:38.42,0:02:45.35,Default,,0,0,0,,[Cú úp rổ vinh quang!]
Dialogue: 0,0:02:38.88,0:02:40.92,Default,,0,0,0,,[Cú úp rổ vinh quang!]
Dialogue: 0,0:02:48.71,0:02:50.77,Default,,0,0,0,,Vào, vào rồi!
Dialogue: 0,0:03:22.01,0:03:24.41,Default,,0,0,0,,Thành công rồi Sakuragi ơi.
Dialogue: 0,0:03:25.48,0:03:27.02,Default,,0,0,0,,Hanamichi, làm tốt lắm.
Dialogue: 0,0:03:27.04,0:03:28.95,Default,,0,0,0,,Cuối cùng cũng thành công rồi.
Dialogue: 0,0:03:29.75,0:03:33.35,Default,,0,0,0,,Cuối cùng thì tất cả những khổ cực, giọt mồ hôi và nước mắt\Ncủa chúng ta trong những ngày qua đã được đền đáp.
Dialogue: 0,0:03:34.72,0:03:37.49,Default,,0,0,0,,Không ngờ Sakuragi lại biết nhảy, ném bóng.
Dialogue: 0,0:03:38.79,0:03:40.35,Default,,0,0,0,,Mình thật sự không dám tin.
Dialogue: 0,0:03:40.49,0:03:43.53,Default,,0,0,0,,Đây là kỳ tích lớn nhất của thế kỷ này đấy.
Dialogue: 0,0:03:44.97,0:03:46.43,Default,,0,0,0,,[Thật sự thì một tháng trước]
Dialogue: 0,0:03:46.70,0:03:49.60,Default,,0,0,0,,[cậu ta vẫn còn là một người ngoài ngành\Nchỉ biết lên rổ và úp rổ thôi.]
Dialogue: 0,0:03:49.94,0:03:55.94,Default,,0,0,0,,[Rốt cuộc huấn luyện viên Anzai\Nđã dùng ma thuật gì thế này?]
Dialogue: 0,0:03:59.88,0:04:01.72,Default,,0,0,0,,Bố Già, thấy sao nào?
Dialogue: 0,0:04:01.75,0:04:03.37,Default,,0,0,0,,Cũng khá đấy.
Dialogue: 0,0:04:07.36,0:04:09.42,Default,,0,0,0,,Rồi, chỉ kém bốn điểm nữa thôi.
Dialogue: 0,0:04:10.48,0:04:11.76,Default,,0,0,0,,Được, đến đây đi.
Dialogue: 0,0:04:14.15,0:04:16.17,Default,,0,0,0,,Đó là buổi tập huấn ném bóng sao?
Dialogue: 0,0:04:16.30,0:04:17.10,Default,,0,0,0,,Không biết.
Dialogue: 0,0:04:17.13,0:04:18.87,Default,,0,0,0,,Không chừng chỉ là may mắn thôi.
Dialogue: 0,0:04:19.42,0:04:20.91,Default,,0,0,0,,Chắc là siêu may mắn thôi.
Dialogue: 0,0:04:21.62,0:04:22.46,Default,,0,0,0,,Mọi người cẩn thận một chút.
Dialogue: 0,0:04:22.48,0:04:23.59,Default,,0,0,0,,Họ sắp tấn công đấy.
Dialogue: 0,0:04:37.44,0:04:39.64,Default,,0,0,0,,Fukuda, thế nào?
Dialogue: 0,0:04:39.87,0:04:40.89,Default,,0,0,0,,May mắn thôi.
Dialogue: 0,0:04:40.91,0:04:42.22,Default,,0,0,0,,Anh nói gì?
Dialogue: 0,0:05:01.63,0:05:03.32,Default,,0,0,0,,Sendoh chuyền hay lắm!
Dialogue: 0,0:05:03.70,0:05:07.13,Default,,0,0,0,,Quả nhiên Sendoh và Fujima rất giỏi.
Dialogue: 0,0:05:07.28,0:05:08.93,Default,,0,0,0,,Với một hậu vệ kiểm soát bóng,
Dialogue: 0,0:05:08.95,0:05:10.87,Default,,0,0,0,,hai người họ đều đứng hàng đầu.
Dialogue: 0,0:05:14.89,0:05:16.32,Default,,0,0,0,,Lại trở thành cách biệt sáu điểm rồi.
Dialogue: 0,0:05:16.59,0:05:19.10,Default,,0,0,0,,Shohoku cố lên!
Dialogue: 0,0:05:19.43,0:05:21.60,Default,,0,0,0,,Hanamichi cố lên!
Dialogue: 0,0:05:21.71,0:05:22.95,Default,,0,0,0,,Chúng ta vẫn còn hy vọng!
Dialogue: 0,0:05:22.97,0:05:24.37,Default,,0,0,0,,Lên đi Mitchi.
Dialogue: 0,0:05:24.40,0:05:26.16,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:05:29.59,0:05:31.45,Default,,0,0,0,,[Sao mọi người có thể\Nquên đi sự tồn tại của mình chứ?]
Dialogue: 0,0:05:32.12,0:05:35.42,Default,,0,0,0,,[Mình là hậu vệ kiểm soát bóng\Ngiỏi nhất tỉnh Kanagawa đấy.]
Dialogue: 0,0:05:36.91,0:05:39.47,Default,,0,0,0,,[Không, mình là người giỏi nhất toàn quốc.]
Dialogue: 0,0:05:39.94,0:05:41.19,Default,,0,0,0,,Miyagi, mau tiến lên!
Dialogue: 0,0:05:41.32,0:05:42.71,Default,,0,0,0,,Ryota cố lên!
Dialogue: 0,0:05:48.25,0:05:48.91,Default,,0,0,0,,Cao quá!
Dialogue: 0,0:05:50.08,0:05:51.81,Default,,0,0,0,,[Chắc chắn họ sẽ cho rằng như vậy.]
Dialogue: 0,0:05:57.48,0:05:58.69,Default,,0,0,0,,[Bóng kiểu đó mà cũng đón được à?]
Dialogue: 0,0:05:58.80,0:06:00.01,Default,,0,0,0,,[Hanamichi, lên đi,]
Dialogue: 0,0:06:00.09,0:06:01.96,Default,,0,0,0,,[biểu diễn màn ban nãy\Ncho mọi người xem một lần nữa.]
Dialogue: 0,0:06:03.66,0:06:05.22,Default,,0,0,0,,Mọi người cứ chờ mà xem.
Dialogue: 0,0:06:05.35,0:06:06.99,Default,,0,0,0,,Xem có phải trùng hợp hay không.
Dialogue: 0,0:06:07.09,0:06:09.28,Default,,0,0,0,,Anh mở to mắt ra mà xem đây, Fukuda.
Dialogue: 0,0:06:12.46,0:06:13.99,Default,,0,0,0,,[Đó là trùng hợp, chắc chắn là trùng hợp.]
Dialogue: 0,0:06:15.25,0:06:17.36,Default,,0,0,0,,Vào rồi!
Dialogue: 0,0:06:17.39,0:06:21.10,Default,,0,0,0,,Hay quá, Sakuragi giỏi quá!
Dialogue: 0,0:06:22.39,0:06:24.66,Default,,0,0,0,,Fukuda, tôi thắng rồi nhé.
Dialogue: 0,0:06:28.40,0:06:30.99,Default,,0,0,0,,Quả nhiên 20 nghìn lần ném bóng\Nkhông uổng phí chút nào.
Dialogue: 0,0:06:31.76,0:06:33.50,Default,,0,0,0,,Đây là thực lực thật sự của nó.
Dialogue: 0,0:06:35.74,0:06:37.40,Default,,0,0,0,,Ném bóng 20 nghìn lần.
Dialogue: 0,0:06:38.21,0:06:40.57,Default,,0,0,0,,Cái gì? 20 nghìn quả?
Dialogue: 0,0:06:42.75,0:06:44.29,Default,,0,0,0,,20 nghìn quả là đủ rồi sao?
Dialogue: 0,0:06:44.31,0:06:45.37,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:06:46.05,0:06:48.31,Default,,0,0,0,,Mày, mày nói thật à?
Dialogue: 0,0:06:49.49,0:06:51.61,Default,,0,0,0,,Sakuragi, cậu làm tốt quá.
Dialogue: 0,0:06:51.99,0:06:54.91,Default,,0,0,0,,Người thường sẽ không tài nào tập ném\Nđược 20 nghìn quả chỉ trong một tuần đâu.
Dialogue: 0,0:07:04.27,0:07:05.82,Default,,0,0,0,,Hanamichi, mày thành công rồi!
Dialogue: 0,0:07:07.07,0:07:08.57,Default,,0,0,0,,Đây là công lao của chúng ta đó.
Dialogue: 0,0:07:08.71,0:07:10.39,Default,,0,0,0,,Chuyện này thì liên quan gì đến anh chứ?
Dialogue: 0,0:07:10.73,0:07:13.19,Default,,0,0,0,,Lần này không phải trùng hợp rồi chứ?
Dialogue: 0,0:07:13.40,0:07:17.43,Default,,0,0,0,,Quả nhiên là thành quả sau buổi huấn luyện\Nđặc biệt với huấn luyện viên Anzai.
Dialogue: 0,0:07:20.63,0:07:22.78,Default,,0,0,0,,Thật sự không dám tin chút nào luôn.
Dialogue: 0,0:07:23.47,0:07:26.60,Default,,0,0,0,,Đã tăng thêm năng lực cho một nhân vật\Nbắt buộc phải chú ý đến rồi.
Dialogue: 0,0:07:29.08,0:07:30.43,Default,,0,0,0,,[Thật là giỏi quá đi.]
Dialogue: 0,0:07:30.77,0:07:33.02,Default,,0,0,0,,[Sakuragi cậu ấy thật sự quá giỏi.]
Dialogue: 0,0:07:33.32,0:07:34.68,Default,,0,0,0,,[Chỉ trong một tuần ngắn ngủi]
Dialogue: 0,0:07:35.62,0:07:38.49,Default,,0,0,0,,[dù buổi huấn luyện đặc biệt\Ncủa huấn luyện viên Anzai có cao siêu cỡ nào]
Dialogue: 0,0:07:38.75,0:07:40.68,Default,,0,0,0,,[thì sự tiến bộ này của cậu ấy\Nđều thật sự quá thần tốc.]
Dialogue: 0,0:07:45.98,0:07:47.41,Default,,0,0,0,,[Cậu vẫn chưa thắng đâu đấy.]
Dialogue: 0,0:07:49.28,0:07:51.48,Default,,0,0,0,,Không được, Fukuda, không được quá hấp tấp!
Dialogue: 0,0:07:52.62,0:07:53.59,Default,,0,0,0,,Bắt bóng bật bảng!
Dialogue: 0,0:07:54.47,0:07:55.22,Default,,0,0,0,,Cứ giao cho tôi!
Dialogue: 0,0:07:55.24,0:07:57.10,Default,,0,0,0,,Tôi sẽ không để cậu thành công nhiều lần đâu.
Dialogue: 0,0:08:09.24,0:08:09.82,Default,,0,0,0,,Tinh Tinh Bự!
Dialogue: 0,0:08:09.84,0:08:12.18,Default,,0,0,0,,Rukawa, lên đi!
Dialogue: 0,0:08:31.64,0:08:33.61,Default,,0,0,0,,Vào rồi, Rukawa!
Dialogue: 0,0:08:34.11,0:08:35.58,Default,,0,0,0,,Cuối cùng thì chỉ kém một quả nữa thôi.
Dialogue: 0,0:08:36.95,0:08:37.72,Default,,0,0,0,,Tình hình không hay rồi.
Dialogue: 0,0:08:39.36,0:08:40.54,Default,,0,0,0,,Tạm dừng.
Dialogue: 0,0:08:43.13,0:08:46.10,Default,,0,0,0,,Đội Shoyo - Ryonan yêu cầu tạm dừng.
Dialogue: 0,0:08:46.63,0:08:49.06,Default,,0,0,0,,Làm hay lắm, chỉ kém hai điểm nữa thôi.
Dialogue: 0,0:08:50.40,0:08:51.70,Default,,0,0,0,,Cứ giao cho tôi.
Dialogue: 0,0:08:51.97,0:08:53.52,Default,,0,0,0,,Chỉ cần có thiên tài tôi đây,
Dialogue: 0,0:08:53.54,0:08:55.37,Default,,0,0,0,,chắc chắn chúng ta sẽ chiến thắng thôi.
Dialogue: 0,0:08:55.57,0:08:59.06,Default,,0,0,0,,Khí thế của Shohoku hăng hái lên\Nlà nhờ được Sakuragi khuấy động.
Dialogue: 0,0:08:59.24,0:09:01.90,Default,,0,0,0,,Không ngờ cậu ta\Nlại có thêm khả năng ném bóng ở cự ly xa.
Dialogue: 0,0:09:02.15,0:09:03.23,Default,,0,0,0,,Thời gian còn lại
Dialogue: 0,0:09:03.34,0:09:05.68,Default,,0,0,0,,phải đổi sang áp dụng chiến thuật\Nlấy phòng thủ làm chính rồi.
Dialogue: 0,0:09:06.45,0:09:08.96,Default,,0,0,0,,Fukuda, cậu đổi với Ikegami.
Dialogue: 0,0:09:10.08,0:09:12.23,Default,,0,0,0,,Chúng ta không thể thua trận này được!
Dialogue: 0,0:09:12.74,0:09:13.58,Default,,0,0,0,,Fukuda.
Dialogue: 0,0:09:13.82,0:09:15.31,Default,,0,0,0,,Fukuda, xin lỗi nhé.
Dialogue: 0,0:09:16.23,0:09:18.62,Default,,0,0,0,,[Fukuda, tôi thắng anh rồi.]
Dialogue: 0,0:09:31.72,0:09:34.03,Default,,0,0,0,,Đi thôi, bây giờ thứ thật sự chơi vui nhất\Nmới bắt đầu.
Dialogue: 0,0:09:34.18,0:09:37.41,Default,,0,0,0,,- Chắc chắn chúng ta sẽ là người chiến thắng sau cùng.\N- Đúng vậy!
Dialogue: 0,0:09:53.60,0:09:55.69,Default,,0,0,0,,Nghe nói bây giờ đội bóng rổ\Nđang đấu với người ta đó.
Dialogue: 0,0:09:56.26,0:09:57.86,Default,,0,0,0,,Đấu với đội mạnh thế sao?
Dialogue: 0,0:09:57.99,0:09:59.75,Default,,0,0,0,,Đi thôi, chúng ta đi xem đấu bóng nào, đi thôi.
Dialogue: 0,0:10:13.82,0:10:15.04,Default,,0,0,0,,Chỉ còn ba phút.
Dialogue: 0,0:10:15.18,0:10:17.57,Default,,0,0,0,,Ryota, chuyền bóng!
Dialogue: 0,0:10:19.55,0:10:20.58,Default,,0,0,0,,Tập huấn ném bóng.
Dialogue: 0,0:10:23.48,0:10:25.46,Default,,0,0,0,,Đối thủ là Ikegami\Nvới sức phòng thủ hàng đầu.
Dialogue: 0,0:10:25.63,0:10:26.79,Default,,0,0,0,,Cơ hội ném bóng sẽ rất nhỏ.
Dialogue: 0,0:10:26.90,0:10:28.04,Default,,0,0,0,,Đối thủ đã dốc hết sức lực đó.
Dialogue: 0,0:10:28.06,0:10:29.09,Default,,0,0,0,,Đáng ghét!
Dialogue: 0,0:10:29.12,0:10:31.36,Default,,0,0,0,,Không được rồi, Hanamichi không ra tay được.
Dialogue: 0,0:10:31.66,0:10:33.55,Default,,0,0,0,,Sakuragi, mau chuyền đi!
Dialogue: 0,0:10:33.58,0:10:35.15,Default,,0,0,0,,Đáng ghét!
Dialogue: 0,0:10:41.65,0:10:43.31,Default,,0,0,0,,[Như vậy hoàn toàn không ném bóng được.]
Dialogue: 0,0:10:45.19,0:10:46.28,Default,,0,0,0,,Mitsui chuyền tốt lắm!
Dialogue: 0,0:10:56.71,0:10:58.33,Default,,0,0,0,,Mau giành bóng!
Dialogue: 0,0:11:01.11,0:11:02.49,Default,,0,0,0,,Quả bóng này của tao!
Dialogue: 0,0:11:02.52,0:11:03.27,Default,,0,0,0,,Mày tránh ra!
Dialogue: 0,0:11:06.61,0:11:10.17,Default,,0,0,0,,Đồ ngốc, Hanamichi mày đang làm gì vậy?\NBọn mày chung một đội đó.
Dialogue: 0,0:11:10.32,0:11:12.31,Default,,0,0,0,,Hai tên này chẳng thay đổi chút nào cả.
Dialogue: 0,0:11:12.38,0:11:13.83,Default,,0,0,0,,Kể từ khi vừa gặp mặt,
Dialogue: 0,0:11:13.85,0:11:16.11,Default,,0,0,0,,hai người họ đã xem đối phương\Nlà kẻ địch mạnh của mình.
Dialogue: 0,0:11:19.92,0:11:21.76,Default,,0,0,0,,Là tự mình mày làm à?
Dialogue: 0,0:11:21.79,0:11:23.26,Default,,0,0,0,,Mày là ai?
Dialogue: 0,0:11:23.66,0:11:24.96,Default,,0,0,0,,Rukawa Kaede.
Dialogue: 0,0:11:25.33,0:11:27.18,Default,,0,0,0,,Ru... Rukawa?
Dialogue: 0,0:11:29.43,0:11:32.76,Default,,0,0,0,,Đồ khốn! Mày dám giẫm nát\Ntrái tim dịu dàng của Haruko!
Dialogue: 0,0:11:33.86,0:11:38.21,Default,,0,0,0,,Đáng ghét! Mày dám giẫm nát\Ntrái tim, trái tim của Haruko.
Dialogue: 0,0:11:38.68,0:11:40.10,Default,,0,0,0,,Đáng ghét, đau lắm đấy.
Dialogue: 0,0:11:40.13,0:11:41.40,Default,,0,0,0,,Mày nói gì?
Dialogue: 0,0:11:53.61,0:11:55.10,Default,,0,0,0,,Sendoh đối đầu với Rukawa rồi.
Dialogue: 0,0:12:17.41,0:12:19.86,Default,,0,0,0,,Em muốn đi Mỹ.
Dialogue: 0,0:12:20.70,0:12:22.11,Default,,0,0,0,,Đi Mỹ.
Dialogue: 0,0:12:26.09,0:12:26.87,Default,,0,0,0,,Yazawa!
Dialogue: 0,0:12:44.71,0:12:47.87,Default,,0,0,0,,Cậu bây giờ vẫn chưa bằng Sendoh.
Dialogue: 0,0:12:49.49,0:12:50.55,Default,,0,0,0,,Tóm lại
Dialogue: 0,0:12:50.79,0:12:54.19,Default,,0,0,0,,cậu nghĩ cách trở thành\Nhọc sinh cấp ba số một Nhật Bản trước đã.
Dialogue: 0,0:13:04.54,0:13:05.40,Default,,0,0,0,,Cướp bóng!
Dialogue: 0,0:13:05.89,0:13:07.87,Default,,0,0,0,,Rukawa cướp được bóng trong tay Sendoh rồi.
Dialogue: 0,0:13:18.94,0:13:21.87,Default,,0,0,0,,Á, Rukawa!
Dialogue: 0,0:13:22.02,0:13:24.95,Default,,0,0,0,,- Bằng điểm rồi!\N- Giỏi quá đi, hay quá.
Dialogue: 0,0:13:28.49,0:13:29.99,Default,,0,0,0,,Chỉ còn một phút nữa thôi.
Dialogue: 0,0:13:30.06,0:13:31.76,Default,,0,0,0,,Tấn công bằng chiến thuật tia chớp!
Dialogue: 0,0:13:31.87,0:13:32.94,Default,,0,0,0,,Ngăn họ ném vào!
Dialogue: 0,0:13:32.96,0:13:34.10,Default,,0,0,0,,Chúng ta chuyển bại thành thắng nào.
Dialogue: 0,0:13:34.12,0:13:35.05,Default,,0,0,0,,Được, Tinh Tinh Bự.
Dialogue: 0,0:13:37.91,0:13:38.89,Default,,0,0,0,,[Nếu]
Dialogue: 0,0:13:40.04,0:13:41.60,Default,,0,0,0,,[đối mặt với đội bóng này,]
Dialogue: 0,0:13:42.75,0:13:44.69,Default,,0,0,0,,[Shohoku cũng đánh thắng được,]
Dialogue: 0,0:13:45.57,0:13:46.87,Default,,0,0,0,,[thì không chừng\Ntrong giải đấu toàn quốc cũng có thể...]
Dialogue: 0,0:14:13.51,0:14:14.34,Default,,0,0,0,,[Ném bóng!]
Dialogue: 0,0:14:15.83,0:14:16.96,Default,,0,0,0,,[Không đúng, đây là...]
Dialogue: 0,0:14:19.97,0:14:21.03,Default,,0,0,0,,[Sendoh.]
Dialogue: 0,0:14:25.61,0:14:26.54,Default,,0,0,0,,[Tiếp sức trên không!]
Dialogue: 0,0:14:29.02,0:14:29.61,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:14:34.89,0:14:36.36,Default,,0,0,0,,Hanamichi!
Dialogue: 0,0:14:40.71,0:14:41.67,Default,,0,0,0,,[Tên đó]
Dialogue: 0,0:14:41.82,0:14:44.32,Default,,0,0,0,,[không ngờ ngay cả tiếp sức trên không\Ncũng có cách ngăn cản.]
Dialogue: 0,0:14:44.92,0:14:46.22,Default,,0,0,0,,Hanamichi.
Dialogue: 0,0:14:50.54,0:14:53.01,Default,,0,0,0,,Cố lên! Cao thủ úp rổ!
Dialogue: 0,0:14:55.91,0:14:56.90,Default,,0,0,0,,[Sakuragi,]
Dialogue: 0,0:14:57.35,0:14:58.84,Default,,0,0,0,,[cậu biết úp rổ không?]
Dialogue: 0,0:14:59.85,0:15:02.12,Default,,0,0,0,,[Lấy sức mạnh gần như phá vỡ quả bóng]
Dialogue: 0,0:15:02.15,0:15:04.21,Default,,0,0,0,,[để ra sức đưa quả bóng vào trong khung rổ,]
Dialogue: 0,0:15:04.31,0:15:06.18,Default,,0,0,0,,[đó gọi là úp rổ.]
Dialogue: 0,0:15:07.86,0:15:09.22,Default,,0,0,0,,[Sakuragi,]
Dialogue: 0,0:15:09.25,0:15:11.59,Default,,0,0,0,,[cậu nhất định phải đưa quả bóng\Nvào trong rổ trên sân nhé.]
Dialogue: 0,0:15:16.47,0:15:21.22,Default,,0,0,0,,Úp rổ!
Dialogue: 0,0:15:37.15,0:15:38.85,Default,,0,0,0,,Trận đấu kết thúc!
Dialogue: 0,0:15:44.37,0:15:45.88,Default,,0,0,0,,Thắng rồi!
Dialogue: 0,0:15:47.54,0:15:52.47,Default,,0,0,0,,Thắng rồi thắng rồi, chúng ta thắng rồi!
Dialogue: 0,0:15:56.09,0:15:56.92,Default,,0,0,0,,Kết thúc rồi.
Dialogue: 0,0:15:57.72,0:16:00.25,Default,,0,0,0,,Lần này mình thật sự không còn tiếc nuối nữa.
Dialogue: 0,0:16:00.39,0:16:02.99,Default,,0,0,0,,[Vậy là tốt nhất, vậy là tốt nhất.]
Dialogue: 0,0:16:03.80,0:16:06.36,Default,,0,0,0,,[Shohoku, các cậu phải thật cố gắng\Ntrong giải đấu toàn quốc đấy.]
Dialogue: 0,0:16:13.94,0:16:16.84,Default,,0,0,0,,[Shohoku đã trở thành\Nmột đội bóng cực giỏi rồi.]
Dialogue: 0,0:16:18.09,0:16:21.13,Default,,0,0,0,,[Nhưng lần sau đấu lại với nhau, chắc chắn\NShoyo bọn này sẽ đánh thắng các cậu.]
Dialogue: 0,0:16:21.84,0:16:24.53,Default,,0,0,0,,Chúng ta là đội mạnh nhất!
Dialogue: 0,0:16:25.58,0:16:29.74,Default,,0,0,0,,[Trận đấu đã kết thúc\Nsau cú úp rổ như trong phim của Sakuragi.]
Dialogue: 0,0:16:30.21,0:16:31.32,Default,,0,0,0,,[Nhưng sự cảm động trong mình]
Dialogue: 0,0:16:31.35,0:16:35.17,Default,,0,0,0,,[đã vui hơn việc thắng trận đấu rất rất nhiều.]
Dialogue: 0,0:16:35.98,0:16:39.35,Default,,0,0,0,,[Vì Uozumi, Fujima, và cả Sendoh,]
Dialogue: 0,0:16:39.98,0:16:43.65,Default,,0,0,0,,[mọi người đều đã\Ndốc hết sức đấu xong trận bóng này.]
Dialogue: 0,0:16:54.19,0:16:56.00,Default,,0,0,0,,Được rồi, con phải đi đây.
Dialogue: 0,0:16:58.06,0:16:59.19,Default,,0,0,0,,Lúc về
Dialogue: 0,0:16:59.33,0:17:01.36,Default,,0,0,0,,con sẽ mang theo\Nchiếc cúp xưng bá toàn quốc về cùng.
Dialogue: 0,0:17:01.52,0:17:04.90,Default,,0,0,0,,[Đội trưởng Đội bóng rổ\Ntrường cấp ba Shohoku - Akagi Takenori]
