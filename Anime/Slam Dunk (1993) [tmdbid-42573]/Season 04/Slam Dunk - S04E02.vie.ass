Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.67,0:00:20.69,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.73,0:00:23.98,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.75,0:00:30.27,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.37,0:00:36.41,Default,,0,0,0,,♫  Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.33,0:00:44.17,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:44.97,0:00:50.97,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.16,0:00:56.97,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.06,0:01:03.04,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.13,0:01:09.87,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.81,0:01:19.76,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:19.88,0:01:25.91,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.05,0:01:31.82,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:32.16,0:01:40.56,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:56.32,0:01:57.62,Default,,0,0,0,,[Shohoku đối đầu với Ryonan,]
Dialogue: 0,0:01:59.22,0:02:02.09,Default,,0,0,0,,[trận đấu này là tia hi vọng cuối cùng\Nbước vào giải đấu toàn quốc.]
Dialogue: 0,0:02:02.33,0:02:03.79,Default,,0,0,0,,[Thời gian chỉ còn chưa đầy sáu phút,]
Dialogue: 0,0:02:04.00,0:02:05.73,Default,,0,0,0,,[Shohoku đã dẫn trước Ryonan 13 điểm.]
Dialogue: 0,0:02:13.35,0:02:16.15,Default,,0,0,0,,[Nhưng mà, khi Uozumi quay về vị trí\Ndưới rổ của Ryonan,]
Dialogue: 0,0:02:16.31,0:02:19.04,Default,,0,0,0,,[Ryonan đang dần\Nhồi phục lại thực lực ban đầu.]
Dialogue: 0,0:02:26.66,0:02:29.72,Default,,0,0,0,,[Uozumi quyết tâm giành chiến thắng,\Nphát huy sức tập trung đáng kinh ngạc.]
Dialogue: 0,0:02:30.03,0:02:34.83,Default,,0,0,0,,[Ngọn lửa của cậu ấy cũng đốt cháy luôn\Nát chủ bài của Ryonan.]
Dialogue: 0,0:02:42.37,0:02:43.90,Default,,0,0,0,,[Ý chí chiến đấu của Sendoh.]
Dialogue: 0,0:02:45.78,0:02:47.85,Default,,0,0,0,,[Tình thế đang dần thay đổi,\Ncơ hội của chúng ta đã đến rồi.]
Dialogue: 0,0:02:48.56,0:02:51.41,Default,,0,0,0,,[Khi trận đấu còn lại không đến năm phút,]
Dialogue: 0,0:02:51.90,0:02:54.06,Default,,0,0,0,,[tỉ số mà Shohoku dẫn trước\Nchỉ còn là mười điểm.]
Dialogue: 0,0:02:57.17,0:02:59.03,Default,,0,0,0,,Cái tên Sendoh này cứ giao cho tôi.
Dialogue: 0,0:03:20.27,0:03:22.70,Default,,0,0,0,,Lần này, tôi đã vượt qua được hai cậu.
Dialogue: 0,0:03:25.64,0:03:34.57,Default,,0,0,0,,[Nhân tố bất an của Shohoku]
Dialogue: 0,0:03:28.76,0:03:31.36,Default,,0,0,0,,[Nhân tố bất an của Shohoku.]
Dialogue: 0,0:03:38.99,0:03:40.22,Default,,0,0,0,,[Đáng ghét.]
Dialogue: 0,0:03:42.90,0:03:45.43,Default,,0,0,0,,- Sendoh cố lên!\N- Hay lắm, hay lắm.
Dialogue: 0,0:03:48.96,0:03:51.29,Default,,0,0,0,,[Đáng ghét, Sendoh.]
Dialogue: 0,0:03:55.31,0:03:56.37,Default,,0,0,0,,[Tôi phải lấy lại.]
Dialogue: 0,0:03:57.14,0:03:58.40,Default,,0,0,0,,Nóng quá.
Dialogue: 0,0:04:00.58,0:04:05.40,Default,,0,0,0,,- Làm tốt lắm, Sendoh, làm tốt lắm.\N- Hãy tiếp tục phát huy.
Dialogue: 0,0:04:06.33,0:04:09.82,Default,,0,0,0,,Thậm chí là Sakuragi\Ncũng không có cách nào ép Sendoh phạm lỗi.
Dialogue: 0,0:04:10.75,0:04:12.72,Default,,0,0,0,,Cái cậu Sendoh tinh ranh quá.
Dialogue: 0,0:04:15.71,0:04:16.68,Default,,0,0,0,,[Còn cách tám điểm.]
Dialogue: 0,0:04:16.98,0:04:18.07,Default,,0,0,0,,[Còn bốn phút rưỡi.]
Dialogue: 0,0:04:18.97,0:04:19.98,Default,,0,0,0,,Tốt.
Dialogue: 0,0:04:21.93,0:04:24.74,Default,,0,0,0,,Với tốc độ mỗi phút vào một quả\Nđể rút ngắn khoảng cách,
Dialogue: 0,0:04:25.22,0:04:28.39,Default,,0,0,0,,sau đó là trong ba mươi giây còn lại,\Nlật ngược tình thế.
Dialogue: 0,0:04:33.54,0:04:34.65,Default,,0,0,0,,Cái cậu đó.
Dialogue: 0,0:04:38.34,0:04:39.55,Default,,0,0,0,,Cậu ta đang nói gì thế?
Dialogue: 0,0:04:39.61,0:04:41.54,Default,,0,0,0,,Anh nằm mơ ban ngày à?
Dialogue: 0,0:04:42.44,0:04:43.41,Default,,0,0,0,,[Sendoh.]
Dialogue: 0,0:04:49.42,0:04:50.75,Default,,0,0,0,,Được rồi, mọi người lên đi.
Dialogue: 0,0:04:52.52,0:04:57.79,Default,,0,0,0,,Cố lên! Cố lên! Cố lên!
Dialogue: 0,0:04:58.93,0:05:05.73,Default,,0,0,0,,Phòng thủ, phòng thủ.
Dialogue: 0,0:05:05.93,0:05:08.33,Default,,0,0,0,,Khán đài đối diện đã nhốn nháo lên rồi.
Dialogue: 0,0:05:08.45,0:05:10.78,Default,,0,0,0,,Bởi mới nói, vừa nãy còn yên tĩnh.
Dialogue: 0,0:05:11.35,0:05:15.04,Default,,0,0,0,,Phòng thủ, phòng thủ.
Dialogue: 0,0:05:15.16,0:05:16.21,Default,,0,0,0,,Thật đó.
Dialogue: 0,0:05:21.34,0:05:23.37,Default,,0,0,0,,Bầu không khí của Ryonan\Nhoàn toàn thay đổi rồi.
Dialogue: 0,0:05:23.83,0:05:26.44,Default,,0,0,0,,Lần này tiêu rồi, tên phiền phức quay lại rồi.
Dialogue: 0,0:05:26.58,0:05:29.04,Default,,0,0,0,,Người khiến cậu ta quay lại\Nkhông ai khác chính là Uozumi.
Dialogue: 0,0:05:32.78,0:05:35.46,Default,,0,0,0,,Ryonan tin tưởng Sendoh 100%.
Dialogue: 0,0:05:36.27,0:05:39.03,Default,,0,0,0,,Họ tin rằng Sendoh sẽ đưa họ đến thắng lợi,
Dialogue: 0,0:05:42.91,0:05:44.74,Default,,0,0,0,,hơn nữa là họ tin chắc là như thế.
Dialogue: 0,0:05:51.25,0:05:54.28,Default,,0,0,0,,[Chỉ cần có Sendoh,\Nchúng ta không thể nào thua được.]
Dialogue: 0,0:05:55.39,0:05:57.59,Default,,0,0,0,,[Sự phòng thủ dưới rổ có tôi.]
Dialogue: 0,0:05:57.96,0:05:59.62,Default,,0,0,0,,[Chỉ cần chúng ta giữ được dưới rổ,]
Dialogue: 0,0:05:59.87,0:06:01.39,Default,,0,0,0,,[việc còn lại sẽ cho Sendoh lo thay chúng ta.]
Dialogue: 0,0:06:03.77,0:06:06.53,Default,,0,0,0,,Được rồi, mọi người chú ý,\Nquả này nhất định phải giữ được.
Dialogue: 0,0:06:07.01,0:06:07.84,Default,,0,0,0,,Được.
Dialogue: 0,0:06:16.50,0:06:18.62,Default,,0,0,0,,[Đừng nóng vội, Rukawa,\Nbây giờ sẽ chuyền cho cậu.]
Dialogue: 0,0:06:19.73,0:06:23.69,Default,,0,0,0,,- Ryochin, chuyền bóng chuyền bóng.\N- Đồ ngốc Hanamichi.
Dialogue: 0,0:06:23.69,0:06:24.90,Default,,0,0,0,,- Cậu có biết không?\N- Chuyền bóng!
Dialogue: 0,0:06:28.17,0:06:31.39,Default,,0,0,0,,Anh muốn chuyền bóng cho Rukawa hả?
Dialogue: 0,0:06:31.53,0:06:32.98,Default,,0,0,0,,Không được, Ryochin.
Dialogue: 0,0:06:34.30,0:06:36.88,Default,,0,0,0,,Ý đồ của anh quá rõ ràng rồi,\Nmau đổi chiến lược đi.
Dialogue: 0,0:06:36.99,0:06:38.62,Default,,0,0,0,,Đồ ngu, rõ ràng là cậu tự làm lộ ý đồ của tôi.
Dialogue: 0,0:06:39.36,0:06:41.05,Default,,0,0,0,,[Đồ ngu, làm hỏng việc tốt của tao.]
Dialogue: 0,0:06:48.70,0:06:50.32,Default,,0,0,0,,Ryochin, chuyển cho tôi.
Dialogue: 0,0:06:51.65,0:06:56.25,Default,,0,0,0,,Được rồi,\Nxem thiên tài Sakuragi đánh bại Sendoh.
Dialogue: 0,0:07:04.98,0:07:05.78,Default,,0,0,0,,Chuyền hay lắm.
Dialogue: 0,0:07:07.15,0:07:09.27,Default,,0,0,0,,Mày dám giành bóng của tao, mày quay lại đây.
Dialogue: 0,0:07:22.13,0:07:24.36,Default,,0,0,0,,Nghe đây, Sendoh, tôi có thể dạy anh một điều.
Dialogue: 0,0:07:25.22,0:07:25.95,Default,,0,0,0,,Chuyện gì?
Dialogue: 0,0:07:26.42,0:07:28.18,Default,,0,0,0,,Bóng rổ không phải trò toán học.
Dialogue: 0,0:07:34.69,0:07:35.30,Default,,0,0,0,,Rukawa.
Dialogue: 0,0:07:35.43,0:07:36.16,Default,,0,0,0,,Miễn cưỡng quá rồi.
Dialogue: 0,0:07:36.49,0:07:37.79,Default,,0,0,0,,Được.
Dialogue: 0,0:07:41.51,0:07:43.21,Default,,0,0,0,,Không né được, làm bậy quá.
Dialogue: 0,0:07:45.51,0:07:46.45,Default,,0,0,0,,Tự tìm đường chết à?
Dialogue: 0,0:07:47.35,0:07:48.32,Default,,0,0,0,,Rukawa.
Dialogue: 0,0:07:48.94,0:07:51.11,Default,,0,0,0,,Cái đồ ngốc này.
Dialogue: 0,0:08:02.23,0:08:03.10,Default,,0,0,0,,Vào rồi.
Dialogue: 0,0:08:06.73,0:08:08.17,Default,,0,0,0,,Quyết đánh thành công rồi.
Dialogue: 0,0:08:08.29,0:08:09.28,Default,,0,0,0,,Cái cậu Rukawa này.
Dialogue: 0,0:08:10.42,0:08:14.33,Default,,0,0,0,,Rukawa, Rukawa, mình yêu Rukawa.
Dialogue: 0,0:08:20.67,0:08:23.27,Default,,0,0,0,,Anh xem phải làm sao đây,\Ntỉ số lại bị kéo ra xa rồi.
Dialogue: 0,0:08:23.89,0:08:26.25,Default,,0,0,0,,Cái tên nhóc này.
Dialogue: 0,0:08:28.12,0:08:30.76,Default,,0,0,0,,Tính cách của Rukawa rất là lì lợm.
Dialogue: 0,0:08:30.85,0:08:33.01,Default,,0,0,0,,Người thường sao lại\Nném rổ vào tình huống đó chứ.
Dialogue: 0,0:08:33.02,0:08:34.68,Default,,0,0,0,,Cái người đó không bao giờ chịu thua đâu.
Dialogue: 0,0:08:35.06,0:08:36.65,Default,,0,0,0,,Phản ứng của Uozumi quá bình tĩnh rồi.
Dialogue: 0,0:08:37.54,0:08:39.87,Default,,0,0,0,,Cậu ta phạm lỗi thêm lần nữa\Nlà sẽ bị mời ra khỏi sân,
Dialogue: 0,0:08:39.99,0:08:41.05,Default,,0,0,0,,vậy mà cậu ta vẫn có thể bình tĩnh vậy.
Dialogue: 0,0:08:41.63,0:08:44.06,Default,,0,0,0,,[Năm cầu thủ của đội chúng ta\Ncũng có bốn người phạm lỗi ba lần rồi.]
Dialogue: 0,0:08:44.36,0:08:45.92,Default,,0,0,0,,[Mọi người phải cẩn thận một chút mới được.]
Dialogue: 0,0:08:46.79,0:08:49.99,Default,,0,0,0,,Cái cậu Rukawa\Nquả thật không phải là người tầm thường.
Dialogue: 0,0:08:50.29,0:08:52.49,Default,,0,0,0,,Lúc muốn ghi điểm là chắc chắn ghi được.
Dialogue: 0,0:08:52.70,0:08:54.91,Default,,0,0,0,,[Hơn nữa trước khi ghi điểm,]
Dialogue: 0,0:08:54.91,0:08:56.99,Default,,0,0,0,,[còn tiện thể dụ Uozumi phạm lỗi.]
Dialogue: 0,0:08:57.71,0:08:59.30,Default,,0,0,0,,[Cậu người mới này thật đáng sợ.]
Dialogue: 0,0:09:02.15,0:09:02.81,Default,,0,0,0,,Koshino.
Dialogue: 0,0:09:04.53,0:09:05.40,Default,,0,0,0,,[Nhưng mà Sendoh...]
Dialogue: 0,0:09:05.94,0:09:07.80,Default,,0,0,0,,[đòn vừa rồi chắc chắc đã gợi ý cho cậu rồi.]
Dialogue: 0,0:09:10.04,0:09:12.27,Default,,0,0,0,,[Chắc là cậu cũng chú ý đến rồi chứ?]
Dialogue: 0,0:09:12.58,0:09:15.01,Default,,0,0,0,,[Đây chính là\Nnhân tố bất an của Shohoku mà tôi nói.]
Dialogue: 0,0:09:16.60,0:09:17.09,Default,,0,0,0,,Lên rồi.
Dialogue: 0,0:09:17.46,0:09:24.26,Default,,0,0,0,,Phòng thủ, phòng thủ.
Dialogue: 0,0:09:24.97,0:09:28.13,Default,,0,0,0,,Phòng thủ, phòng thủ, phòng thủ.
Dialogue: 0,0:09:31.54,0:09:32.51,Default,,0,0,0,,[Yểm trợ?]
Dialogue: 0,0:09:40.55,0:09:41.04,Default,,0,0,0,,Đổi phòng thủ.
Dialogue: 0,0:09:43.72,0:09:45.43,Default,,0,0,0,,Mau chặn lại.
Dialogue: 0,0:09:46.55,0:09:47.58,Default,,0,0,0,,Không thể để đổi phòng thủ.
Dialogue: 0,0:09:47.95,0:09:49.18,Default,,0,0,0,,Chiều cao chênh lệch quá nhiều rồi.
Dialogue: 0,0:09:49.31,0:09:50.19,Default,,0,0,0,,Dù cho Miyagi có cố gắng như nào nữa,
Dialogue: 0,0:09:50.32,0:09:51.44,Default,,0,0,0,,nhưng muốn chặn Sendoh - người cao hơn 20cm,
Dialogue: 0,0:09:51.53,0:09:52.69,Default,,0,0,0,,hoàn toàn là không thể nào.
Dialogue: 0,0:09:52.85,0:09:56.25,Default,,0,0,0,,Không, mục tiêu của Sendoh\Nkhông chỉ có như thế.
Dialogue: 0,0:09:57.91,0:09:59.53,Default,,0,0,0,,Ra tay với Miyagi trước ư?
Dialogue: 0,0:10:02.70,0:10:04.93,Default,,0,0,0,,Ryota, đừng có miễn cưỡng.
Dialogue: 0,0:10:06.98,0:10:07.96,Default,,0,0,0,,Đừng hòng ra tay.
Dialogue: 0,0:10:08.82,0:10:10.18,Default,,0,0,0,,Không được, Ryota.
Dialogue: 0,0:10:10.45,0:10:12.82,Default,,0,0,0,,Sendoh muốn dụ cậu phạm lỗi lần thứ tư,
Dialogue: 0,0:10:13.96,0:10:15.08,Default,,0,0,0,,cậu đừng để bị dụ.
Dialogue: 0,0:10:17.93,0:10:23.83,Default,,0,0,0,,Nhân tố bất an của Shohoku\Nchính là phạm lỗi nhiều.
Dialogue: 0,0:10:29.44,0:10:31.07,Default,,0,0,0,,Số 7 màu đỏ phạm lỗi.
Dialogue: 0,0:10:41.17,0:10:44.03,Default,,0,0,0,,Vào rồi, vào rồi, hay quá đi.
Dialogue: 0,0:11:21.20,0:11:23.53,Default,,0,0,0,,Bóng của đội trắng được tính,\Nphạt thêm một quả.
Dialogue: 0,0:11:23.74,0:11:26.46,Default,,0,0,0,,Hay lắm, hay lắm.
Dialogue: 0,0:11:28.57,0:11:30.67,Default,,0,0,0,,Sendoh, hay lắm, làm tốt lắm.
Dialogue: 0,0:11:31.11,0:11:34.41,Default,,0,0,0,,Còn một quả nữa, cố lên.
Dialogue: 0,0:11:39.35,0:11:41.15,Default,,0,0,0,,Miyagi đã phạm lỗi lần thứ tư rồi.
Dialogue: 0,0:11:43.18,0:11:45.81,Default,,0,0,0,,Phải làm sao đây, đổi nguời không?
Dialogue: 0,0:11:46.75,0:11:47.64,Default,,0,0,0,,[Không, đợi chút đã.]
Dialogue: 0,0:11:47.77,0:11:49.13,Default,,0,0,0,,[Dù gì thời gian còn lại cũng không nhiều.]
Dialogue: 0,0:11:50.22,0:11:52.35,Default,,0,0,0,,[Không, đợi đã, nhỡ bị bắt rời sân thì làm sao?]
Dialogue: 0,0:11:53.17,0:11:54.30,Default,,0,0,0,,[Không được, không được, đợi đã, đợi đã.]
Dialogue: 0,0:11:54.42,0:11:57.15,Default,,0,0,0,,[Bây giờ huấn luyện viên không ở đây,\Nmình buộc phải toàn quyền chỉ huy.]
Dialogue: 0,0:11:57.24,0:12:00.69,Default,,0,0,0,,[Mình phải bình tĩnh, mình phải bình tĩnh lại.]
Dialogue: 0,0:12:00.82,0:12:02.13,Default,,0,0,0,,[Nhưng mà rốt cuộc\Nmình phải làm sao mới đúng đây?]
Dialogue: 0,0:12:02.28,0:12:03.94,Default,,0,0,0,,[Đổi Ryota hay là tiếp tục cho cậu ấy đấu?]
Dialogue: 0,0:12:04.05,0:12:06.94,Default,,0,0,0,,[Làm sao đây?]
Dialogue: 0,0:12:07.08,0:12:08.64,Default,,0,0,0,,Anh ơi, anh hãy bình tĩnh lại đi.
Dialogue: 0,0:12:11.44,0:12:13.27,Default,,0,0,0,,[Ừ, mình phải bình tĩnh,\Nmình nhất định phải kiên cường.]
Dialogue: 0,0:12:13.77,0:12:16.71,Default,,0,0,0,,[Nhưng mà phải làm sao, phải làm sao đây?]
Dialogue: 0,0:12:16.84,0:12:19.82,Default,,0,0,0,,Ryota, cậu làm được mà.
Dialogue: 0,0:12:24.63,0:12:25.60,Default,,0,0,0,,Miyagi.
Dialogue: 0,0:12:26.20,0:12:28.44,Default,,0,0,0,,Để thắng trận này,\Nchúng tôi không thể mất cậu.
Dialogue: 0,0:12:29.15,0:12:30.24,Default,,0,0,0,,Cậu phải cố lên.
Dialogue: 0,0:12:34.75,0:12:35.88,Default,,0,0,0,,Tôi biết rồi.
Dialogue: 0,0:12:38.49,0:12:41.46,Default,,0,0,0,,Ba người chúng ta\Nhình như đã phạm lỗi ba lần rồi.
Dialogue: 0,0:12:41.63,0:12:43.06,Default,,0,0,0,,Đúng vậy, phải cẩn thận chút.
Dialogue: 0,0:12:43.49,0:12:45.90,Default,,0,0,0,,Sakuragi, cậu là người đáng lo nhất,\Ncậu còn dám nói người khác.
Dialogue: 0,0:12:46.80,0:12:48.42,Default,,0,0,0,,Anh nói gì chứ?
Dialogue: 0,0:12:48.45,0:12:50.49,Default,,0,0,0,,Quân đoàn phạm lỗi, đúng thật là.
Dialogue: 0,0:12:54.72,0:12:56.36,Default,,0,0,0,,Điểm số bị cướp đi thì phải giành lại về.
Dialogue: 0,0:12:56.55,0:12:58.22,Default,,0,0,0,,Đừng để mất tinh thần tấn công.
Dialogue: 0,0:13:00.66,0:13:01.84,Default,,0,0,0,,Kiêu căng quá rồi đó.
Dialogue: 0,0:13:05.10,0:13:09.19,Default,,0,0,0,,Mày... mày là cái thá gì cơ chứ!
Dialogue: 0,0:13:09.47,0:13:12.33,Default,,0,0,0,,Lời nói này của mày\Nđã làm giảm khí thế của các thành viên đó.
Dialogue: 0,0:13:12.97,0:13:13.44,Default,,0,0,0,,Mày có hiểu không?
Dialogue: 0,0:13:13.56,0:13:14.60,Default,,0,0,0,,Lời tao nói đâu có nhắm vào mày.
Dialogue: 0,0:13:14.71,0:13:17.14,Default,,0,0,0,,Người mà ngay cả tấn công cũng không biết,\Nmày không có tư cách đó.
Dialogue: 0,0:13:17.79,0:13:22.88,Default,,0,0,0,,Cái gì? Đáng ghét!
Dialogue: 0,0:13:22.99,0:13:23.92,Default,,0,0,0,,Phạm thêm một quả.
Dialogue: 0,0:13:30.07,0:13:31.18,Default,,0,0,0,,Hay lắm.
Dialogue: 0,0:13:31.60,0:13:33.73,Default,,0,0,0,,Sendoh, ném hay lắm, cố lên.
Dialogue: 0,0:13:38.65,0:13:42.21,Default,,0,0,0,,Đáng ghét, đồ Sendoh đáng ghét.
Dialogue: 0,0:13:44.89,0:13:47.72,Default,,0,0,0,,[Rukawa, Sendoh,\NFukuda và cái tên Thủ Lĩnh Người Vượn kia,]
Dialogue: 0,0:13:47.84,0:13:49.64,Default,,0,0,0,,[tất cả các người...\Ntôi phải đánh bại tất cả các người.]
Dialogue: 0,0:13:49.75,0:13:51.81,Default,,0,0,0,,Bọn mày cứ đợi mà xem.
Dialogue: 0,0:13:52.01,0:13:54.38,Default,,0,0,0,,Chỉ số phẫn nộ của Hanamichi\Nlại tăng lên rồi.
Dialogue: 0,0:13:54.46,0:13:55.69,Default,,0,0,0,,Lại có trò hay để xem đây.
Dialogue: 0,0:13:56.83,0:13:58.92,Default,,0,0,0,,Tao thấy nó sắp rời sân rồi.
Dialogue: 0,0:14:02.30,0:14:04.18,Default,,0,0,0,,Không được, không thể rời sân.
Dialogue: 0,0:14:04.32,0:14:06.37,Default,,0,0,0,,Như vậy không phải là để cho Ryonan đắc ý ư?
Dialogue: 0,0:14:11.89,0:14:13.11,Default,,0,0,0,,Đòn trước của Sendoh,
Dialogue: 0,0:14:13.24,0:14:15.28,Default,,0,0,0,,là đòn nham hiểm\Nlợi dụng sự chênh lệch chiều cao.
Dialogue: 0,0:14:15.41,0:14:16.29,Default,,0,0,0,,Ừ.
Dialogue: 0,0:14:16.44,0:14:18.54,Default,,0,0,0,,Chiều cao và thể lực của cậu ta\Ncũng hơn Miyagi.
Dialogue: 0,0:14:18.64,0:14:22.69,Default,,0,0,0,,Nếu như muốn chặn cậu ta,\NMiyagi không cố hơn nữa,
Dialogue: 0,0:14:22.87,0:14:24.29,Default,,0,0,0,,hoàn toàn không thể làm được.
Dialogue: 0,0:14:24.90,0:14:27.32,Default,,0,0,0,,Hơn nữa, Sendoh không chỉ là\Ndụ Miyagi phạm lỗi,
Dialogue: 0,0:14:27.43,0:14:29.52,Default,,0,0,0,,mà còn ghi điểm nữa.
Dialogue: 0,0:14:29.59,0:14:30.96,Default,,0,0,0,,Trong phút chốc đã ghi được ba điểm.
Dialogue: 0,0:14:32.93,0:14:34.70,Default,,0,0,0,,Kế hoạch của cậu ta đúng là quá hoàn hảo.
Dialogue: 0,0:14:35.78,0:14:37.24,Default,,0,0,0,,Sendoh xuất sắc thật.
Dialogue: 0,0:14:37.38,0:14:39.37,Default,,0,0,0,,Sendoh là một cầu thủ rất là đáng gờm.
Dialogue: 0,0:14:40.35,0:14:41.65,Default,,0,0,0,,Bây giờ chỉ còn cách bảy điểm.
Dialogue: 0,0:14:44.77,0:14:46.89,Default,,0,0,0,,Tôi sẽ nhanh chóng\Nkhiến anh cách mười mấy điểm.
Dialogue: 0,0:14:50.75,0:14:53.33,Default,,0,0,0,,Được, quả này nhất định phải ném vào.
Dialogue: 0,0:14:53.99,0:14:56.55,Default,,0,0,0,,[Không, nhưng mà, vẫn chưa được.]
Dialogue: 0,0:14:57.09,0:14:59.66,Default,,0,0,0,,- Quả nhiên, Yasuda.\N- Vâng.
Dialogue: 0,0:15:00.23,0:15:01.72,Default,,0,0,0,,Cậu đi chuẩn bị đi.
Dialogue: 0,0:15:01.84,0:15:03.54,Default,,0,0,0,,Lát nữa có thể là sẽ ra sân\Nthay thế cho Miyagi bất kỳ lúc nào.
Dialogue: 0,0:15:03.96,0:15:04.59,Default,,0,0,0,,Vâng.
Dialogue: 0,0:15:04.95,0:15:08.31,Default,,0,0,0,,Khu vực nghỉ ngơi của Shohoku\Nđã bắt đầu hỗn loạn rồi.
Dialogue: 0,0:15:10.07,0:15:12.74,Default,,0,0,0,,[Cầu thủ trên sân, ngoài Rukawa ra,]
Dialogue: 0,0:15:12.85,0:15:14.21,Default,,0,0,0,,[mỗi người đều đã phạm không chỉ ba lỗi.]
Dialogue: 0,0:15:14.34,0:15:16.82,Default,,0,0,0,,[Bây giờ Miyagi đã phạm lỗi lần thứ tư rồi,]
Dialogue: 0,0:15:16.96,0:15:19.79,Default,,0,0,0,,[bốn người còn lại cũng sẽ sợ phạm lỗi.]
Dialogue: 0,0:15:20.96,0:15:23.21,Default,,0,0,0,,[Đến lúc đó sự phòng thủ của họ sẽ suy yếu dần.]
Dialogue: 0,0:15:23.81,0:15:26.74,Default,,0,0,0,,[Đây chính là một trong những nhân tố bất an.]
Dialogue: 0,0:15:28.78,0:15:30.24,Default,,0,0,0,,Vấn đề phạm lỗi.
Dialogue: 0,0:15:30.41,0:15:31.19,Default,,0,0,0,,Thêm một quả nữa.
Dialogue: 0,0:15:31.19,0:15:35.91,Default,,0,0,0,,Cố lên!
Dialogue: 0,0:15:36.92,0:15:37.58,Default,,0,0,0,,[Ryota.]
Dialogue: 0,0:15:38.62,0:15:41.14,Default,,0,0,0,,[Mình thật sự có cách\Nthay thế vị trí của Miyagi ư?]
Dialogue: 0,0:15:46.36,0:15:47.80,Default,,0,0,0,,[Trên một cái sân khấu như vậy...]
Dialogue: 0,0:15:50.93,0:15:53.46,Default,,0,0,0,,Thực lực dàn dự bị hiện tại của Shohoku\Ncòn quá yếu,
Dialogue: 0,0:15:53.73,0:15:56.62,Default,,0,0,0,,thay người chỉ khiến cho đội bóng yếu đi.
Dialogue: 0,0:15:56.76,0:15:58.38,Default,,0,0,0,,Nếu cầu thủ được thay vào không đúng,
Dialogue: 0,0:15:58.38,0:16:00.24,Default,,0,0,0,,e là sẽ thành đòn chí mạng của Shohoku.
Dialogue: 0,0:16:01.33,0:16:02.12,Default,,0,0,0,,Tiêu rồi.
Dialogue: 0,0:16:02.33,0:16:04.83,Default,,0,0,0,,Tao không biết về bóng rổ lắm,\Nnhưng trông có vẻ không ổn lắm.
Dialogue: 0,0:16:04.95,0:16:08.02,Default,,0,0,0,,Phạm thêm một lỗi nữa\Nlà Miyagi sẽ bị đuổi khỏi sân.
Dialogue: 0,0:16:09.51,0:16:11.07,Default,,0,0,0,,Tuy là không có rõ ràng lắm,
Dialogue: 0,0:16:11.16,0:16:13.47,Default,,0,0,0,,nhưng mà có thể chắc chắn là\NRyonan đang bắt đầu phản công.
Dialogue: 0,0:16:14.17,0:16:15.79,Default,,0,0,0,,[Với phong cách của Ryonan,]
Dialogue: 0,0:16:15.91,0:16:16.83,Default,,0,0,0,,[họ sẽ không bỏ qua cơ hội này.]
Dialogue: 0,0:16:21.57,0:16:23.82,Default,,0,0,0,,[Còn nữa, nhân tố bất an thứ hai là...]
Dialogue: 0,0:16:26.15,0:16:28.02,Default,,0,0,0,,Cầu thủ của họ thật sự quá ít.
Dialogue: 0,0:16:32.54,0:16:35.61,Default,,0,0,0,,Trận đấu đang diễn ra\Ntheo kịch bản tôi vạch ra rồi.
Dialogue: 0,0:16:35.70,0:16:39.87,Default,,0,0,0,,Biên kịch: Taoka Moichi.\NDiễn viên: Sendoh Akira.
Dialogue: 0,0:16:40.02,0:16:44.83,Default,,0,0,0,,Đạo diễn: Taoka Moichi.\NTôi là người giữ quyền đi hay ở.
Dialogue: 0,0:16:44.92,0:16:46.20,Default,,0,0,0,,Huấn luyện viên.
Dialogue: 0,0:16:47.70,0:16:49.96,Default,,0,0,0,,[Tiêu rồi, sao mình lại nói nhảm cơ chứ.]
Dialogue: 0,0:16:50.16,0:16:51.94,Default,,0,0,0,,[Phải bình tĩnh, Moichi.]
Dialogue: 0,0:16:51.94,0:16:55.55,Default,,0,0,0,,[Huấn luyện viên đã bắt đầu hăng hái lên rồi,\Ntrận đấu này chúng ta sẽ thắng.]
Dialogue: 0,0:16:56.44,0:17:00.48,Default,,0,0,0,,[Là một huấn luyện viên, là một đạo diễn,\Nthay đổi cục diện trận đấu]
Dialogue: 0,0:17:00.58,0:17:03.55,Default,,0,0,0,,[có thể ảnh hưởng đến\Nnhân vật có tính quyết định.]
Dialogue: 0,0:17:03.75,0:17:05.38,Default,,0,0,0,,[Ngoài Sendoh ra, không còn ai khác nữa.]
Dialogue: 0,0:17:06.02,0:17:08.56,Default,,0,0,0,,[Người dẫn Sendoh vào đội bóng rổ là mình,]
Dialogue: 0,0:17:08.70,0:17:11.29,Default,,0,0,0,,[là điều đúng đắn nhất mà đời này mình đã làm.]
Dialogue: 0,0:17:12.92,0:17:15.62,Default,,0,0,0,,Rukawa, cậu xem thường Sendoh quá rồi.
Dialogue: 0,0:17:18.97,0:17:21.90,Default,,0,0,0,,Đồ chết tiệt, đồ ngu, đồ tự tìm đường chết.
Dialogue: 0,0:17:24.71,0:17:26.48,Default,,0,0,0,,Rukawa, đừng có làm bừa.
Dialogue: 0,0:17:26.95,0:17:27.51,Default,,0,0,0,,Đúng là non nớt quá mà.
Dialogue: 0,0:17:33.86,0:17:34.58,Default,,0,0,0,,[Cái gì cơ?]
Dialogue: 0,0:17:51.08,0:17:52.01,Default,,0,0,0,,Rukawa.
Dialogue: 0,0:17:57.23,0:17:58.46,Default,,0,0,0,,Cậu ấy phản công rồi.
Dialogue: 0,0:18:10.70,0:18:12.80,Default,,0,0,0,,Thật là lỗ mãng quá rồi.
Dialogue: 0,0:18:14.34,0:18:15.53,Default,,0,0,0,,Khoảng cách lại kéo ra xa rồi.
Dialogue: 0,0:18:24.25,0:18:25.31,Default,,0,0,0,,Thú vị đây.
Dialogue: 0,0:18:34.76,0:18:36.56,Default,,0,0,0,,Được rồi, chúng ta cũng trả cho họ một quả đi.
Dialogue: 0,0:18:36.76,0:18:37.28,Default,,0,0,0,,Koshino.
Dialogue: 0,0:18:38.33,0:18:39.16,Default,,0,0,0,,Chuyền bóng cho tôi.
Dialogue: 0,0:18:41.73,0:18:44.63,Default,,0,0,0,,[Cái cậu Sendoh này bệnh cũ lại tái phát rồi.]
Dialogue: 0,0:18:45.40,0:18:49.43,Default,,0,0,0,,Phòng thủ, phòng thủ.
Dialogue: 0,0:18:50.60,0:18:53.66,Default,,0,0,0,,[Đã đến nước này rồi,\Nchúng ta phải thoát khỏi họ.]
Dialogue: 0,0:18:54.83,0:18:56.83,Default,,0,0,0,,[Lúc này đây tuyệt đối\Nkhông thể để họ vượt ngược lại.]
Dialogue: 0,0:18:57.23,0:18:58.17,Default,,0,0,0,,[Nhất định phải thắng.]
Dialogue: 0,0:19:00.41,0:19:03.15,Default,,0,0,0,,Cẩn thận đừng có phạm lỗi nữa, cố lên.
Dialogue: 0,0:19:03.33,0:19:06.67,Default,,0,0,0,,Cố lên, Hanamichi.
Dialogue: 0,0:19:06.82,0:19:13.06,Default,,0,0,0,,Anh ơi, cố lên, Rukawa, Sakuragi cố lên!
Dialogue: 0,0:19:13.40,0:19:16.05,Default,,0,0,0,,[Sau khi lên lớp 11,\Nbiết được niềm vui của việc chuyền bóng,]
Dialogue: 0,0:19:16.57,0:19:18.70,Default,,0,0,0,,[cách chơi bóng của cậu ấy đã thay đổi.]
Dialogue: 0,0:19:19.12,0:19:19.94,Default,,0,0,0,,[Lúc còn học lớp 10,]
Dialogue: 0,0:19:20.06,0:19:22.15,Default,,0,0,0,,[Sendoh là cầu thủ\Nchỉ biết tấn công để ghi điểm.]
Dialogue: 0,0:19:22.84,0:19:24.92,Default,,0,0,0,,[Chắc là cậu còn nhớ điều này chứ, Akagi.]
Dialogue: 0,0:19:33.92,0:19:36.35,Default,,0,0,0,,Tốt rồi, bây giờ chỉ còn lại ba phút thôi.
Dialogue: 0,0:19:36.56,0:19:40.45,Default,,0,0,0,,[Một năm trước,\Ncậu để một mình cậu ấy ghi 47 điểm.]
Dialogue: 0,0:19:51.57,0:19:52.73,Default,,0,0,0,,Ném rổ đưa người về phía sau.
Dialogue: 0,0:20:02.67,0:20:04.57,Default,,0,0,0,,Hay quá, hay quá.
Dialogue: 0,0:20:04.80,0:20:08.74,Default,,0,0,0,,Vào rồi, vào rồi.
Dialogue: 0,0:20:09.04,0:20:11.23,Default,,0,0,0,,Hay quá, xuất sắc quá.
Dialogue: 0,0:20:23.82,0:20:27.05,Default,,0,0,0,,[Nhân tố bất an của Shohoku\Nmà huấn luyện viên Taoka chỉ ra]
Dialogue: 0,0:20:27.19,0:20:29.21,Default,,0,0,0,,[đã hiện thức hóa từng cái một rồi.]
Dialogue: 0,0:20:32.06,0:20:35.45,Default,,0,0,0,,[Vì át chủ bài của Ryonan - Sendoh,\Nđã liên tục ghi được mười điểm,]
Dialogue: 0,0:20:35.65,0:20:39.39,Default,,0,0,0,,[khoảng cách của Ryonan và Shohoku\Nchỉ còn lại bảy điểm.]
Dialogue: 0,0:20:57.43,0:21:00.23,Default,,0,0,0,,♫ Trong giấc mơ nhếch nhác thảm hại ♫
Dialogue: 0,0:21:01.23,0:21:03.67,Default,,0,0,0,,♫ Tôi bỗng choàng tỉnh ♫
Dialogue: 0,0:21:05.04,0:21:09.16,Default,,0,0,0,,♫ Lại một buổi sớm với ánh nắng rực rỡ ♫
Dialogue: 0,0:21:12.69,0:21:18.84,Default,,0,0,0,,♫ Nghe bài hát mình thích ♫
Dialogue: 0,0:21:20.24,0:21:26.05,Default,,0,0,0,,♫ Mặc chiếc áo sơ mi sạch sẽ ♫
Dialogue: 0,0:21:27.31,0:21:29.93,Default,,0,0,0,,♫ Đêm qua ♫
Dialogue: 0,0:21:30.63,0:21:33.93,Default,,0,0,0,,♫ Có người nói với tôi với vẻ mệt mỏi rằng ♫
Dialogue: 0,0:21:34.35,0:21:36.31,Default,,0,0,0,,♫ Muốn tìm kiếm kích thích ♫
Dialogue: 0,0:21:36.43,0:21:39.82,Default,,0,0,0,,♫ Muốn đột phá thực tại ♫
Dialogue: 0,0:21:39.95,0:21:41.96,Default,,0,0,0,,♫ Đừng lún sâu như thế nữa ♫
Dialogue: 0,0:21:42.11,0:21:46.12,Default,,0,0,0,,♫ Hãy nắm giữ khoảnh khắc tỏa sáng ♫
Dialogue: 0,0:21:46.24,0:21:49.34,Default,,0,0,0,,♫ Tôi phải sống đúng với bản thân mình ♫
Dialogue: 0,0:21:50.09,0:21:53.77,Default,,0,0,0,,♫ Có lẽ sẽ hối hận, có lẽ không hoàn hảo ♫
