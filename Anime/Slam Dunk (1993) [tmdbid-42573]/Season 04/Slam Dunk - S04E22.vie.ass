Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.57,0:00:20.59,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.77,0:00:24.02,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.85,0:00:30.37,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.60,0:00:36.64,Default,,0,0,0,,♫ Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.56,0:00:44.40,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.20,0:00:51.20,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.39,0:00:57.20,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.29,0:01:03.27,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.36,0:01:10.10,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:14.04,0:01:19.99,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:20.11,0:01:26.14,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.28,0:01:32.05,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:32.15,0:01:40.55,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:56.34,0:01:59.83,Default,,0,0,0,,[Trận đấu mà Shohoku\Nchống lại Shoyo chung tay với Ryonan,]
Dialogue: 0,0:02:00.04,0:02:01.92,Default,,0,0,0,,[do có sự tham gia giữa chừng của Sendoh]
Dialogue: 0,0:02:01.95,0:02:03.84,Default,,0,0,0,,[mà đã đảo ngược tình thế.]
Dialogue: 0,0:02:05.38,0:02:08.05,Default,,0,0,0,,[Ở nửa trận sau, Fukuda của Ryonan\Ncũng đã gia nhập trận chiến.]
Dialogue: 0,0:02:08.15,0:02:10.86,Default,,0,0,0,,[Liên đội với sức tấn công tăng lên gấp bội này]
Dialogue: 0,0:02:11.07,0:02:13.15,Default,,0,0,0,,[cuối cùng cũng đã giành lấy vị trí dẫn trước.]
Dialogue: 0,0:02:16.25,0:02:19.57,Default,,0,0,0,,[Ở diễn biến khác, Hanamichi một lòng\Nmuốn thể hiện thành quả tập huấn của mình]
Dialogue: 0,0:02:19.73,0:02:21.71,Default,,0,0,0,,[mà lại liên tục thất bại.]
Dialogue: 0,0:02:21.71,0:02:22.97,Default,,0,0,0,,[Khiến cho Shohoku rơi vào cảnh\Nkhó khăn không ngờ tới.]
Dialogue: 0,0:02:23.71,0:02:25.58,Default,,0,0,0,,Một khi Shohoku thua tại đây
Dialogue: 0,0:02:26.22,0:02:29.21,Default,,0,0,0,,cũng có nghĩa là Shohoku\Nkhông có tư cách tham gia giải đấu toàn quốc.
Dialogue: 0,0:02:31.53,0:02:34.31,Default,,0,0,0,,[Sau đó bắt đầu từ lúc Hanamichi\Nphát huy sức mạnh bóng bật bảng,]
Dialogue: 0,0:02:34.42,0:02:37.29,Default,,0,0,0,,[Shohoku lại giành về vị trí dẫn đầu.]
Dialogue: 0,0:02:40.21,0:02:43.18,Default,,0,0,0,,Chúng tôi là đội bóng\Ncó mục tiêu là xưng bá toàn quốc.
Dialogue: 0,0:02:45.65,0:02:47.24,Default,,0,0,0,,Tôi nhất định phải thắng.
Dialogue: 0,0:02:50.23,0:02:58.86,Default,,0,0,0,,[Chàng trai kỳ tích - Sakuragi Hanamichi!]
Dialogue: 0,0:02:52.90,0:02:55.52,Default,,0,0,0,,[Chàng trai kỳ tích - Sakuragi Hanamichi!]
Dialogue: 0,0:03:42.46,0:03:43.18,Default,,0,0,0,,Chuyền tốt lắm.
Dialogue: 0,0:03:56.88,0:03:57.67,Default,,0,0,0,,Bắt bóng bật bảng!
Dialogue: 0,0:04:03.65,0:04:04.45,Default,,0,0,0,,[Sakuragi!]
Dialogue: 0,0:04:11.39,0:04:12.79,Default,,0,0,0,,Được, tấn công nhanh đi.
Dialogue: 0,0:04:16.27,0:04:18.86,Default,,0,0,0,,[Không biết có phải ảo giác của mình không\Nnhưng cái tên Sakuragi đó,]
Dialogue: 0,0:04:19.77,0:04:23.64,Default,,0,0,0,,[chỉ trong vòng chưa tới một tháng\Nkể từ vòng loại trước,]
Dialogue: 0,0:04:24.41,0:04:27.84,Default,,0,0,0,,[mà cậu ta có thể nhảy cao hơn, nhanh hơn.]
Dialogue: 0,0:04:31.44,0:04:33.61,Default,,0,0,0,,Sakuragi lại giành được bóng bật bảng rồi.
Dialogue: 0,0:04:35.08,0:04:38.12,Default,,0,0,0,,Hơn nữa sức nhảy với sức bật
Dialogue: 0,0:04:38.12,0:04:40.78,Default,,0,0,0,,lại vượt qua Akagi và Uozumi nhiều.
Dialogue: 0,0:04:40.98,0:04:42.77,Default,,0,0,0,,Sakuragi, sức mạnh của cú bắt bóng bật bảng
Dialogue: 0,0:04:42.97,0:04:44.37,Default,,0,0,0,,có phải cũng có thể thành công\Nở giải đấu toàn quốc không?
Dialogue: 0,0:04:45.01,0:04:45.97,Default,,0,0,0,,Mình phải quan sát thật kĩ.
Dialogue: 0,0:04:47.64,0:04:50.80,Default,,0,0,0,,Giỏi quá, Sakuragi giỏi ghê, bóng bật bảng\Nbị cậu ấy giành lấy liên tục luôn.
Dialogue: 0,0:04:51.20,0:04:55.54,Default,,0,0,0,,Hanamichi đã luyện tập rèn luyện sức khỏe\Nvà luyện tập cơ bản rất nhiều.
Dialogue: 0,0:05:01.11,0:05:02.84,Default,,0,0,0,,Tránh ra đi, chó ngoan không chắn đường.
Dialogue: 0,0:05:04.20,0:05:06.36,Default,,0,0,0,,Đồ khốn, thế mà dám đánh tao.
Dialogue: 0,0:05:09.08,0:05:12.24,Default,,0,0,0,,Để nhân tài tốt như thế chơi bóng rổ,\Nthật là đáng tiếc.
Dialogue: 0,0:05:12.52,0:05:14.42,Default,,0,0,0,,Phải bảo cậu ấy gia nhập câu lạc bộ Judo\Ncủa chúng tôi mới đúng.
Dialogue: 0,0:05:15.55,0:05:18.58,Default,,0,0,0,,Anh tại nữa rồi, phiền chết đi được.
Dialogue: 0,0:05:19.32,0:05:22.19,Default,,0,0,0,,Tuy tập huấn ném bóng lần này không thành công,
Dialogue: 0,0:05:22.49,0:05:24.98,Default,,0,0,0,,cơ mà tiến hành tập huấn là sự lựa chọn chính xác đấy.
Dialogue: 0,0:05:25.09,0:05:26.34,Default,,0,0,0,,Tất nhiên rồi.
Dialogue: 0,0:05:26.97,0:05:29.72,Default,,0,0,0,,Mình tin buổi tập huấn ném bóng của cậu ấy\Nsẽ thành công ở trong trận đấu nhanh thôi.
Dialogue: 0,0:05:29.83,0:05:30.96,Default,,0,0,0,,Nhưng mà
Dialogue: 0,0:05:31.09,0:05:34.42,Default,,0,0,0,,chúng ta biết nó\Nchỉ hơn người ta ở sức mạnh mà thôi.
Dialogue: 0,0:05:35.60,0:05:39.16,Default,,0,0,0,,[Sakuragi cố lên, mau nhớ lại đi,]
Dialogue: 0,0:05:42.94,0:05:46.77,Default,,0,0,0,,[ném bóng bằng nhịp điệu,\Nhãy học nhịp điệu đó bằng cơ thể mình.]
Dialogue: 0,0:05:47.09,0:05:48.08,Default,,0,0,0,,Ryota!
Dialogue: 0,0:05:56.15,0:05:56.94,Default,,0,0,0,,Bóng bật bảng!
Dialogue: 0,0:05:58.08,0:05:59.81,Default,,0,0,0,,- Tinh Tinh Bự, tránh ra!\N- Cái gì?
Dialogue: 0,0:06:01.02,0:06:05.34,Default,,0,0,0,,Vua bóng bật bảng Sakuragi,\Ndưới rổ là thiên hạ của tôi!
Dialogue: 0,0:06:08.72,0:06:10.12,Default,,0,0,0,,Mất mặt rồi...
Dialogue: 0,0:06:17.23,0:06:19.48,Default,,0,0,0,,Vào rồi, đúng là khó tin.
Dialogue: 0,0:06:21.29,0:06:24.47,Default,,0,0,0,,- Thế mà lại có chuyện này.\N- Vẫn thế, chẳng thay đổi gì.
Dialogue: 0,0:06:24.57,0:06:27.34,Default,,0,0,0,,Sakuragi giỏi quá! Ném hay lắm!
Dialogue: 0,0:06:27.52,0:06:30.85,Default,,0,0,0,,- Bóng rổ còn có chiêu dùng mặt ném bóng như thế à?\N- Tao chẳng biết.
Dialogue: 0,0:06:31.22,0:06:32.61,Default,,0,0,0,,Không có đâu.
Dialogue: 0,0:06:32.81,0:06:33.54,Default,,0,0,0,,Haruko...
Dialogue: 0,0:06:34.08,0:06:36.17,Default,,0,0,0,,Thì ra đó chính là\Ntập huấn ném bóng trong truyền thuyết.
Dialogue: 0,0:06:36.74,0:06:39.71,Default,,0,0,0,,Người thường như chúng ta cho dù\Ntrồng cây chuối cũng không học được chiêu này đâu.
Dialogue: 0,0:06:40.18,0:06:41.20,Default,,0,0,0,,Tôi chẳng muốn học.
Dialogue: 0,0:06:43.30,0:06:44.60,Default,,0,0,0,,Cậu ta vẫn hài hước như thế.
Dialogue: 0,0:06:45.22,0:06:48.83,Default,,0,0,0,,Có điều Sakuragi tập trung tinh thần\Nbắt bóng bật bảng đúng là đáng sợ.
Dialogue: 0,0:06:49.20,0:06:52.54,Default,,0,0,0,,Phải, tình thế của trận đấu\Nthường vì thế mà bị cậu ta đảo ngược.
Dialogue: 0,0:06:53.16,0:06:56.46,Default,,0,0,0,,Người tạo bầu không khí cho Shohoku\Nchắc là cậu ta đấy.
Dialogue: 0,0:06:57.22,0:06:58.65,Default,,0,0,0,,Thật...
Dialogue: 0,0:06:58.77,0:07:03.14,Default,,0,0,0,,Sân bóng có Sakuragi, Uozumi, Hanagata,
Dialogue: 0,0:07:03.26,0:07:06.74,Default,,0,0,0,,ba người trung phong số một số hai\Ncủa tỉnh Kanagawa.
Dialogue: 0,0:07:07.16,0:07:11.25,Default,,0,0,0,,Nhưng người nổi bật nhất bên dưới rổ\Nlần nào cũng là Sakuragi.
Dialogue: 0,0:07:12.03,0:07:14.72,Default,,0,0,0,,Uozumi và cả Hanagata thì sao?
Dialogue: 0,0:07:29.31,0:07:30.47,Default,,0,0,0,,Lại là Sakuragi!
Dialogue: 0,0:07:30.85,0:07:32.94,Default,,0,0,0,,Tôi là thiên tài bóng bật bảng Sakuragi!
Dialogue: 0,0:07:35.42,0:07:36.85,Default,,0,0,0,,Cậu còn hơi sớm đấy.
Dialogue: 0,0:07:38.25,0:07:38.78,Default,,0,0,0,,Tinh Tinh Bự!
Dialogue: 0,0:07:39.19,0:07:41.29,Default,,0,0,0,,Đừng ngây người ra đó, chạy mau!
Dialogue: 0,0:07:41.40,0:07:42.53,Default,,0,0,0,,Em biết rồi!
Dialogue: 0,0:07:42.63,0:07:45.06,Default,,0,0,0,,- Xông lên!\N- Akagi! Cú bóng bật bảng hay đấy.
Dialogue: 0,0:07:45.73,0:07:47.32,Default,,0,0,0,,Kéo giãn điểm số trong một hơi luôn.
Dialogue: 0,0:07:48.25,0:07:49.74,Default,,0,0,0,,Akagi không thua đâu.
Dialogue: 0,0:07:50.25,0:07:54.27,Default,,0,0,0,,Cảm giác mà họ mang đến\Ngiống như giành bóng để làm màu dưới rổ vậy.
Dialogue: 0,0:07:54.40,0:07:57.40,Default,,0,0,0,,Chỉ cần có hai người thủ vững dưới rổ
Dialogue: 0,0:07:57.53,0:08:00.69,Default,,0,0,0,,thì tôi tin giải đấu toàn quốc này\Ncũng sẽ có trận đấu đặc sắc.
Dialogue: 0,0:08:03.41,0:08:06.41,Default,,0,0,0,,- Hay! Thêm một quả nữa!\N- Chơi càng ngày càng tốt!
Dialogue: 0,0:08:06.50,0:08:10.44,Default,,0,0,0,,- Quả này phải vào, cố lên!\N- Vâng!
Dialogue: 0,0:08:11.74,0:08:13.84,Default,,0,0,0,,Nhìn đi nhìn lại tao vẫn thấy
Dialogue: 0,0:08:14.00,0:08:16.84,Default,,0,0,0,,Sakuragi với Tinh Tinh Bự\Nhợp cạ nhau thật đấy.
Dialogue: 0,0:08:17.11,0:08:18.95,Default,,0,0,0,,Phải, tao không ngờ đấy.
Dialogue: 0,0:08:19.10,0:08:21.28,Default,,0,0,0,,Hai người họ chơi bóng\Ntrên cùng một sân bóng,
Dialogue: 0,0:08:21.43,0:08:23.62,Default,,0,0,0,,còn giành được chức á quân của Kanagawa.
Dialogue: 0,0:08:25.31,0:08:27.06,Default,,0,0,0,,Đến giờ tao vẫn còn chưa dám tin.
Dialogue: 0,0:08:27.73,0:08:29.10,Default,,0,0,0,,Thật đấy,
Dialogue: 0,0:08:29.53,0:08:30.08,Default,,0,0,0,,mới đầu tôi còn lo hai người họ
Dialogue: 0,0:08:30.08,0:08:31.71,Default,,0,0,0,,không biết sẽ ra nông nỗi gì.
Dialogue: 0,0:08:39.96,0:08:41.05,Default,,0,0,0,,Tinh Tinh Bự đáng ghét.
Dialogue: 0,0:08:41.89,0:08:45.70,Default,,0,0,0,,Thế nào? Đây là trò chơi ném bóng\Nmà cậu vừa coi thường đấy.
Dialogue: 0,0:08:45.91,0:08:49.33,Default,,0,0,0,,- Đừng có xem thường môn thể thao bóng rổ!\N- Chết tiệt.
Dialogue: 0,0:08:53.29,0:08:58.46,Default,,0,0,0,,[Sakuragi với anh trai chắc là\Ncó thể cùng nhau tham gia giải toàn quốc.]
Dialogue: 0,0:08:59.63,0:09:01.67,Default,,0,0,0,,Sakuragi cố lên!
Dialogue: 0,0:09:01.83,0:09:06.02,Default,,0,0,0,,Shohoku!
Dialogue: 0,0:09:09.76,0:09:10.66,Default,,0,0,0,,Bắt bóng bật bảng!
Dialogue: 0,0:09:18.04,0:09:20.75,Default,,0,0,0,,- Tinh Tinh Bự, anh đừng cản trở em.\N- Sakuragi, mau chuyền bóng ra ngoài.
Dialogue: 0,0:09:20.87,0:09:23.28,Default,,0,0,0,,- Chuyền bóng.\N- Có chết cũng không chuyền cho mày.
Dialogue: 0,0:09:27.24,0:09:30.68,Default,,0,0,0,,- Sakuragi, cậu xem thường người khác quá đấy.\N- Chết tiệt.
Dialogue: 0,0:09:32.50,0:09:33.96,Default,,0,0,0,,Chắn hay lắm, giỏi quá.
Dialogue: 0,0:09:35.77,0:09:37.13,Default,,0,0,0,,Cái tên Thủ Lĩnh Người Vượn chết tiệt.
Dialogue: 0,0:09:37.58,0:09:40.57,Default,,0,0,0,,- Bắt đầu phản công.\N- Cứ vững vàng mà ghi bàn.
Dialogue: 0,0:09:45.26,0:09:46.16,Default,,0,0,0,,Sendoh!
Dialogue: 0,0:10:00.06,0:10:01.02,Default,,0,0,0,,[Bóng ba điểm.]
Dialogue: 0,0:10:11.16,0:10:13.86,Default,,0,0,0,,Thành công rồi!
Dialogue: 0,0:10:14.23,0:10:15.03,Default,,0,0,0,,[Chết tiệt...]
Dialogue: 0,0:10:18.39,0:10:20.63,Default,,0,0,0,,Tốt quá, hòa rồi!
Dialogue: 0,0:10:20.77,0:10:23.29,Default,,0,0,0,,Vừa nãy vốn là cơ hội tốt nhất để bỏ xa bọn họ.
Dialogue: 0,0:10:23.77,0:10:26.15,Default,,0,0,0,,Phải, cầu thủ như Sendoh,
Dialogue: 0,0:10:26.26,0:10:29.23,Default,,0,0,0,,cho dù vào đội nào cũng đều là át chủ bài.
Dialogue: 0,0:10:32.96,0:10:33.92,Default,,0,0,0,,Hòa rồi.
Dialogue: 0,0:10:36.39,0:10:36.98,Default,,0,0,0,,Này.
Dialogue: 0,0:10:39.89,0:10:43.02,Default,,0,0,0,,Đến lúc chấm dứt rồi đấy.
Dialogue: 0,0:10:44.80,0:10:46.53,Default,,0,0,0,,Tôi nhất định sẽ vượt mặt anh.
Dialogue: 0,0:10:51.57,0:10:52.60,Default,,0,0,0,,Nhất định sẽ.
Dialogue: 0,0:11:29.98,0:11:30.74,Default,,0,0,0,,Đó là...
Dialogue: 0,0:11:30.76,0:11:31.81,Default,,0,0,0,,Đúng vậy,
Dialogue: 0,0:11:32.71,0:11:36.51,Default,,0,0,0,,đối phương thay đổi chiến thuật,\Ndời chủ lực phòng thủ vào trong vòng cấm.
Dialogue: 0,0:11:37.65,0:11:40.31,Default,,0,0,0,,Hanagata đứng ngay vạch phạt đền canh chừng\NSakuragi một lòng muốn vào vùng dưới rổ.
Dialogue: 0,0:11:40.42,0:11:43.00,Default,,0,0,0,,Nhưng khi Sakuragi chuyền ra ngoài...
Dialogue: 0,0:11:43.43,0:11:44.98,Default,,0,0,0,,Thì lại có Fukuda ở ngoài quấn lấy cậu ấy.
Dialogue: 0,0:11:46.30,0:11:49.25,Default,,0,0,0,,Cách này vừa có thể ngăn cản\Nđòn tấn công nhanh của Shohoku.
Dialogue: 0,0:11:50.05,0:11:50.95,Default,,0,0,0,,Họ muốn ngăn cản khả năng
Dialogue: 0,0:11:51.05,0:11:54.03,Default,,0,0,0,,bắt bóng bật bảng\Ncủa hai người Sakuragi và Akagi.
Dialogue: 0,0:11:54.86,0:11:55.83,Default,,0,0,0,,Thì ra là thế.
Dialogue: 0,0:11:56.57,0:11:58.22,Default,,0,0,0,,Họ đã dùng
Dialogue: 0,0:11:58.40,0:12:01.08,Default,,0,0,0,,ưu thế khi có hai trung phong hàng đầu\Nlà Uozumi và Hanagata trong đội.
Dialogue: 0,0:12:01.25,0:12:01.87,Default,,0,0,0,,Phải.
Dialogue: 0,0:12:02.63,0:12:03.41,Default,,0,0,0,,Họ đến giải đấu toàn quốc
Dialogue: 0,0:12:03.53,0:12:06.10,Default,,0,0,0,,thì nhất định sẽ bị tấn công\Nbởi các chiến thuật phòng thủ khác nhau.
Dialogue: 0,0:12:06.87,0:12:07.48,Default,,0,0,0,,Nhưng theo tôi thấy
Dialogue: 0,0:12:07.62,0:12:10.78,Default,,0,0,0,,phải thế nào mới có thể kiềm chế Sakuragi\Ntại vị trí cao hơn ở giữa sân chứ?
Dialogue: 0,0:12:11.55,0:12:13.77,Default,,0,0,0,,Chỉ dựa vào mình Fukuda thì hơi miễn cưỡng.
Dialogue: 0,0:12:14.65,0:12:16.44,Default,,0,0,0,,Không sao, yên tâm đi,
Dialogue: 0,0:12:17.50,0:12:21.77,Default,,0,0,0,,Sakuragi rời khỏi vùng dưới rổ\Nthì chẳng có năng lực ném bóng gì cả.
Dialogue: 0,0:12:22.56,0:12:25.09,Default,,0,0,0,,Cái đó thì chưa chắc đâu.
Dialogue: 0,0:12:31.19,0:12:32.28,Default,,0,0,0,,Chết tiệt...
Dialogue: 0,0:12:33.73,0:12:34.43,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:12:34.53,0:12:36.96,Default,,0,0,0,,- Mitchi!\N- Đồ đần, chuyền đi đâu vậy?
Dialogue: 0,0:12:39.32,0:12:40.67,Default,,0,0,0,,Fujima, tấn công nhanh!
Dialogue: 0,0:12:53.69,0:12:56.32,Default,,0,0,0,,Hay lắm! Lần này Fukuda ghi điểm kìa.
Dialogue: 0,0:12:58.99,0:13:01.64,Default,,0,0,0,,Mọi người vững vàng trả lại một quả cho họ.
Dialogue: 0,0:13:02.49,0:13:03.82,Default,,0,0,0,,Vừa nãy anh làm gì thế hả?
Dialogue: 0,0:13:05.58,0:13:06.77,Default,,0,0,0,,Muốn thoát à?
Dialogue: 0,0:13:08.70,0:13:11.06,Default,,0,0,0,,Hôm nay cậu nói lắm thật.
Dialogue: 0,0:13:19.38,0:13:20.58,Default,,0,0,0,,Chắn hay lắm.
Dialogue: 0,0:13:24.16,0:13:26.89,Default,,0,0,0,,Fukuda, tôi sẽ không để anh\Nđắc ý quá nhiều lần đâu.
Dialogue: 0,0:13:37.96,0:13:40.81,Default,,0,0,0,,- Tiếp sức trên không!\N- Sự ăn ý của đội bóng quá xuất sắc.
Dialogue: 0,0:13:40.81,0:13:42.36,Default,,0,0,0,,Không hổ là cạ cứng vàng của Shoyo.
Dialogue: 0,0:13:43.04,0:13:46.40,Default,,0,0,0,,Anh đang làm gì thế hả?\NCái tên đeo mắt kính thế mà lại biểu diễn xiếc.
Dialogue: 0,0:13:46.71,0:13:48.47,Default,,0,0,0,,Ít nhất anh ta\Nkhông dùng mặt để cho bóng vào rổ.
Dialogue: 0,0:13:49.55,0:13:53.07,Default,,0,0,0,,- Khó tin quá.\N- Hanagata quả nhiên ghê gớm.
Dialogue: 0,0:13:53.64,0:13:55.80,Default,,0,0,0,,Fujima cũng chuyền bóng tốt lắm.
Dialogue: 0,0:13:56.59,0:14:00.33,Default,,0,0,0,,Nhớ lại thì hình như Fujima\Nchưa ném bóng lần nào.
Dialogue: 0,0:14:00.52,0:14:05.70,Default,,0,0,0,,Chắc là để tạo ra\Nsức tấn công mạnh nhất của đội bóng.
Dialogue: 0,0:14:06.36,0:14:10.81,Default,,0,0,0,,Uozumi, Hanagata, Sendoh, Fukuda.
Dialogue: 0,0:14:11.65,0:14:13.12,Default,,0,0,0,,Tôi nghĩ thân là hậu vệ kiểm soát bóng,
Dialogue: 0,0:14:13.24,0:14:16.10,Default,,0,0,0,,rất khó để cậu ta gặp được đội bóng\Nđáng để dẫn dắt như thế này lần nào nữa.
Dialogue: 0,0:14:22.11,0:14:24.30,Default,,0,0,0,,[Rukawa với Sendoh và Fukuda,]
Dialogue: 0,0:14:24.51,0:14:28.54,Default,,0,0,0,,[chỉ có cú ném bóng tập huấn\Nmới có thể đánh bại mấy người trong một lần.]
Dialogue: 0,0:14:30.92,0:14:33.48,Default,,0,0,0,,Sakuragi, đừng miễn cưỡng ra tay,\Nchuyền bóng nhanh lên.
Dialogue: 0,0:14:34.53,0:14:35.53,Default,,0,0,0,,[Chết tiệt.]
Dialogue: 0,0:14:35.69,0:14:38.09,Default,,0,0,0,,Fukuda, Sakuragi không thể tự ném bóng ở đó.
Dialogue: 0,0:14:38.29,0:14:40.12,Default,,0,0,0,,- Cậu ta sẽ chuyền bóng.\N- Gì hả?
Dialogue: 0,0:14:40.23,0:14:41.60,Default,,0,0,0,,Được, thế thì chuyền vậy.
Dialogue: 0,0:14:45.24,0:14:46.65,Default,,0,0,0,,Động tác của cậu đần thật.
Dialogue: 0,0:14:46.77,0:14:48.61,Default,,0,0,0,,- Chết tiệt...\N- Đần cực.
Dialogue: 0,0:14:50.58,0:14:54.45,Default,,0,0,0,,[Đáng ghét, cái tên ngu này,\Nsẽ có một ngày tao đánh bại mày với Sendoh.]
Dialogue: 0,0:14:58.49,0:15:00.89,Default,,0,0,0,,Nếu vừa nãy cậu ấy ném bóng thì tốt rồi.
Dialogue: 0,0:15:01.22,0:15:02.64,Default,,0,0,0,,Vẫn là bó tay.
Dialogue: 0,0:15:02.75,0:15:05.75,Default,,0,0,0,,Tao đã không mong chờ gì\Nvào cú ném bóng tập huấn của Hanamichi nữa.
Dialogue: 0,0:15:06.22,0:15:11.35,Default,,0,0,0,,[Sakuragi, cố lên, mau nhớ đến nhịp điệu.]
Dialogue: 0,0:15:21.01,0:15:23.41,Default,,0,0,0,,- Kiyota, qua đây so tài đi.\N- Maki...
Dialogue: 0,0:15:24.52,0:15:27.29,Default,,0,0,0,,[Nếu có thể ghi điểm từ\Ncầu thủ số một số hai toàn quốc]
Dialogue: 0,0:15:27.29,0:15:28.43,Default,,0,0,0,,[như Maki...]
Dialogue: 0,0:15:28.84,0:15:33.27,Default,,0,0,0,,[thì mình sẽ càng sung sức hơn nữa\Ntrong trận đấu ra mắt ở giải đấu toàn quốc.]
Dialogue: 0,0:15:33.33,0:15:34.95,Default,,0,0,0,,Được, nhờ cả vào anh đấy.
Dialogue: 0,0:15:46.82,0:15:48.52,Default,,0,0,0,,Thành công rồi...
Dialogue: 0,0:15:55.89,0:15:58.12,Default,,0,0,0,,Chết tiệt, vừa nãy suýt nữa thì...
Dialogue: 0,0:15:58.56,0:16:00.56,Default,,0,0,0,,Sao thế Kiyota? Có phải hết sức rồi không?
Dialogue: 0,0:16:00.73,0:16:02.49,Default,,0,0,0,,Đừng đùa, Maki.
Dialogue: 0,0:16:02.63,0:16:04.60,Default,,0,0,0,,Chúng ta là đội bóng\Ntop bốn toàn quốc vào năm ngoái đấy.
Dialogue: 0,0:16:04.80,0:16:08.17,Default,,0,0,0,,Nếu năm nay không có được thành tích tốt hơn\Nthì đến Hiroshima cũng chẳng có ý nghĩa gì.
Dialogue: 0,0:16:08.57,0:16:10.04,Default,,0,0,0,,Mới tập chút xíu vậy mà đã đuối
Dialogue: 0,0:16:10.19,0:16:12.12,Default,,0,0,0,,thì đến trận chung kết sẽ không gồng nổi đâu.
Dialogue: 0,0:16:13.57,0:16:16.76,Default,,0,0,0,,Chúng ta với đội Shohoku - con đường phía trước\Nmịt mờ ngay trận đầu tiên
Dialogue: 0,0:16:16.76,0:16:18.34,Default,,0,0,0,,khác nhau nhiều lắm.
Dialogue: 0,0:16:19.03,0:16:21.13,Default,,0,0,0,,Dù sao thì cái đám Khỉ Đầu Đỏ đó...
Dialogue: 0,0:16:24.56,0:16:28.32,Default,,0,0,0,,Này các bạn Shohoku,\Ncác cậu phải về nhanh vậy sao?
Dialogue: 0,0:16:28.46,0:16:31.59,Default,,0,0,0,,Không sao, mau về nhà đi,
Dialogue: 0,0:16:31.62,0:16:33.30,Default,,0,0,0,,chờ nhìn thấy biểu hiện sung sức\Nở trận chung kết của tôi trên ti vi nhé.
Dialogue: 0,0:16:35.52,0:16:38.65,Default,,0,0,0,,Kiyota, đừng miễn cưỡng bản thân quá.
Dialogue: 0,0:16:38.86,0:16:40.82,Default,,0,0,0,,Không đủ sức thì thôi, hết cách rồi.
Dialogue: 0,0:16:41.35,0:16:43.28,Default,,0,0,0,,Maki, như vậy ổn thật à?
Dialogue: 0,0:16:44.41,0:16:46.59,Default,,0,0,0,,Dù sao trong đội\Ncòn có nhiều người có thể thay thế cậu mà.
Dialogue: 0,0:16:46.73,0:16:50.41,Default,,0,0,0,,Không được như thế Maki,\Nxin anh hãy luyện thêm với em đi.
Dialogue: 0,0:17:02.65,0:17:03.64,Default,,0,0,0,,Hay lắm!
Dialogue: 0,0:17:03.74,0:17:07.59,Default,,0,0,0,,Uozumi càng chơi càng mượt,\Nđạp ngã họ trong một hơi luôn.
Dialogue: 0,0:17:14.02,0:17:17.45,Default,,0,0,0,,[Trận đấu cuối cùng của\Nthời cấp ba của mình chỉ còn lại mười phút.]
Dialogue: 0,0:17:20.42,0:17:23.41,Default,,0,0,0,,[Akagi, tôi sẽ xem biểu hiện trong\Nmười phút cuối này của mình]
Dialogue: 0,0:17:23.55,0:17:26.23,Default,,0,0,0,,[là món quà tạm biệt\Nkhi tiễn các người đến giải đấu toàn quốc.]
Dialogue: 0,0:17:26.95,0:17:29.10,Default,,0,0,0,,Sao thế Shohoku?
Dialogue: 0,0:17:31.57,0:17:33.80,Default,,0,0,0,,Đừng nghĩ nhiều thế, trước lúc đó
Dialogue: 0,0:17:34.18,0:17:36.38,Default,,0,0,0,,cậu chỉ cần\Nlàm tốt chuyện mình phải làm là được.
Dialogue: 0,0:17:36.50,0:17:39.39,Default,,0,0,0,,Bắt bóng bật bảng à? Em biết lý lẽ này.
Dialogue: 0,0:17:39.49,0:17:41.12,Default,,0,0,0,,Đừng nghĩ đến mấy chuyện linh tinh khác.
Dialogue: 0,0:17:41.76,0:17:43.59,Default,,0,0,0,,Giao phần ném bóng cho chúng tôi là được.
Dialogue: 0,0:17:46.26,0:17:48.66,Default,,0,0,0,,[Dưới rổ có Thủ Lĩnh Người Vượn\Nvới tên đeo mắt kính,]
Dialogue: 0,0:17:49.13,0:17:51.93,Default,,0,0,0,,[nếu có thể dễ dàng bắt bóng bật bảng\Nthì mình đâu cần khổ cực vậy?]
Dialogue: 0,0:17:52.73,0:17:53.76,Default,,0,0,0,,[Chết tiệt...]
Dialogue: 0,0:17:53.94,0:17:57.07,Default,,0,0,0,,[Nếu lúc này cú ném bóng tập huấn\Ncủa mình thành công...]
Dialogue: 0,0:18:00.69,0:18:02.68,Default,,0,0,0,,Điểm số dần bị kéo giãn.
Dialogue: 0,0:18:03.64,0:18:06.15,Default,,0,0,0,,Phải nghĩ cách phá vỡ phòng thủ\Ntrong vòng cấm của họ.
Dialogue: 0,0:18:06.26,0:18:08.35,Default,,0,0,0,,Vào một quả nữa là thua mười điểm rồi.
Dialogue: 0,0:18:09.24,0:18:11.42,Default,,0,0,0,,Nếu khoảng cách là hai chữ số\Nthì sĩ khí của mọi người sẽ suy giảm.
Dialogue: 0,0:18:11.42,0:18:14.86,Default,,0,0,0,,Cần nghĩ cách cổ vũ mới được.
Dialogue: 0,0:18:15.68,0:18:19.22,Default,,0,0,0,,- Akagi! Cố lên cho tôi!\N- Shohoku cố lên!
Dialogue: 0,0:18:19.33,0:18:21.55,Default,,0,0,0,,- Hanamichi!\N- Rukawa cố lên!
Dialogue: 0,0:18:21.71,0:18:26.71,Default,,0,0,0,,Shohoku!
Dialogue: 0,0:18:28.62,0:18:29.81,Default,,0,0,0,,Fukuda, canh chừng Rukawa.
Dialogue: 0,0:18:36.58,0:18:38.77,Default,,0,0,0,,Chết tiệt, mọi người đều xem thường mình!
Dialogue: 0,0:18:39.78,0:18:41.31,Default,,0,0,0,,- Hết cách!\N- Mitchi...
Dialogue: 0,0:18:43.22,0:18:47.09,Default,,0,0,0,,Cậu không thể ném bóng ở đây,\Nlần này cậu sẽ chuyền cho ai đây?
Dialogue: 0,0:18:47.23,0:18:49.60,Default,,0,0,0,,Bớt nói nhảm đi, đây là tự do của tôi.
Dialogue: 0,0:18:51.27,0:18:52.71,Default,,0,0,0,,Tao không chuyền cho mày đâu.
Dialogue: 0,0:18:53.18,0:18:55.20,Default,,0,0,0,,- Hanamichi.\N- Ryota, nhờ anh đấy.
Dialogue: 0,0:18:59.52,0:19:01.62,Default,,0,0,0,,Ryota! Tại sao anh lại làm thế?
Dialogue: 0,0:19:18.25,0:19:19.63,Default,,0,0,0,,Không hổ là Rukawa!
Dialogue: 0,0:19:19.76,0:19:22.51,Default,,0,0,0,,Hanamichi, mày cứ ngoan ngoãn\Nchuyền bóng cho Rukawa là được.
Dialogue: 0,0:19:22.62,0:19:24.12,Default,,0,0,0,,Rukawa tuyệt quá.
Dialogue: 0,0:19:24.21,0:19:26.72,Default,,0,0,0,,- Cái tên này thật là...\N- Cảm ơn.
Dialogue: 0,0:19:38.21,0:19:39.64,Default,,0,0,0,,[Cái tên này...]
Dialogue: 0,0:19:48.50,0:19:49.59,Default,,0,0,0,,Họ phòng thủ lại nhanh thật.
Dialogue: 0,0:19:56.71,0:19:57.64,Default,,0,0,0,,[Mình nhất định phải giành được bóng.]
Dialogue: 0,0:19:58.65,0:20:01.31,Default,,0,0,0,,- Cái tên đần đó lại thế rồi.\N- Dù sao thì cũng không ném vào được.
Dialogue: 0,0:20:01.84,0:20:03.64,Default,,0,0,0,,[Sử dụng đầu gối.]
Dialogue: 0,0:20:04.01,0:20:04.94,Default,,0,0,0,,Hanamichi!
Dialogue: 0,0:20:05.81,0:20:07.14,Default,,0,0,0,,[Dùng sức mạnh của cổ tay.]
Dialogue: 0,0:20:07.74,0:20:09.04,Default,,0,0,0,,Chẳng lẽ nó lại nữa à?
Dialogue: 0,0:20:09.71,0:20:11.20,Default,,0,0,0,,[Ném bóng ra thật cao.]
Dialogue: 0,0:20:11.80,0:20:13.45,Default,,0,0,0,,Hanamichi đừng ném!
Dialogue: 0,0:20:14.10,0:20:17.44,Default,,0,0,0,,- [Để bóng vẽ thành một đường cung...]\N- [Sakuragi...]
Dialogue: 0,0:20:18.71,0:20:22.15,Default,,0,0,0,,[Ném ra ngoài bằng nhịp điệu cố định.]
Dialogue: 0,0:20:48.50,0:20:55.82,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:20:56.30,0:21:03.36,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:21:13.79,0:21:20.45,Default,,0,0,0,,♫ Từng một lòng muốn thực hiện\Nnhững ước mơ xưa cũ ♫
Dialogue: 0,0:21:21.11,0:21:25.67,Default,,0,0,0,,♫ Cho đến hôm nay vẫn chói mắt như thế ♫
Dialogue: 0,0:21:28.35,0:21:35.90,Default,,0,0,0,,♫ Cho dù tâm tình đầy sự bất an ♫
Dialogue: 0,0:21:36.02,0:21:40.01,Default,,0,0,0,,♫ Tôi vẫn vững tin\Nvới lựa chọn của chính mình ♫
Dialogue: 0,0:21:42.24,0:21:48.98,Default,,0,0,0,,♫ Thích vẻ mặt thuần khiết\Nkhông điểm trang gì của cậu ♫
Dialogue: 0,0:21:49.12,0:21:55.02,Default,,0,0,0,,♫ Nếu một ngày nó thay đổi,\Nsẽ làm người ta thấy đau lòng lắm ♫
Dialogue: 0,0:21:55.97,0:22:01.59,Default,,0,0,0,,♫ Thời niên thiếu đã từng luôn lấp lánh ♫
Dialogue: 0,0:22:01.68,0:22:04.12,Default,,0,0,0,,♫ Đôi mắt của cậu, hỡi bạn tôi ♫
Dialogue: 0,0:22:04.45,0:22:10.97,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:22:11.05,0:22:19.00,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:22:21.35,0:22:22.42,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:26.28,0:22:30.51,Default,,0,0,0,,- Vào rồi.\N- Khó tin quá!
Dialogue: 0,0:22:30.62,0:22:33.24,Default,,0,0,0,,Chuyện khó tin nhất của thế kỷ này.
Dialogue: 0,0:22:33.37,0:22:35.12,Default,,0,0,0,,Giỏi quá, giỏi quá Sakuragi!
Dialogue: 0,0:22:35.29,0:22:38.13,Default,,0,0,0,,Sự cố gắng ném 20 nghìn quả trong một tuần.
Dialogue: 0,0:22:38.24,0:22:40.11,Default,,0,0,0,,Nhưng có thể chỉ là ăn may thôi.
