Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.72,0:00:20.64,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.70,0:00:23.95,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.62,0:00:30.14,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.37,0:00:36.41,Default,,0,0,0,,♫ Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.33,0:00:44.17,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:44.97,0:00:50.97,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.16,0:00:56.97,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.06,0:01:03.04,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.13,0:01:09.87,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.81,0:01:19.76,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:19.88,0:01:25.91,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.05,0:01:31.82,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:31.92,0:01:40.32,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:55.63,0:01:57.45,Default,,0,0,0,,[Phóng viên tuần san bóng rổ,]
Dialogue: 0,0:01:55.73,0:01:59.51,Default,,0,0,0,,[Tuyển thủ dự bị tỉnh Kanagawa]\N[Sức hấp dẫn của Sendoh trường Ryonan]
Dialogue: 0,0:01:57.60,0:01:58.53,Default,,0,0,0,,[Aida Yayoi]
Dialogue: 0,0:01:58.63,0:02:01.06,Default,,0,0,0,,[một lòng muốn cho\Nngười hâm mộ bóng rổ trên toàn quốc biết]
Dialogue: 0,0:02:01.18,0:02:03.80,Default,,0,0,0,,[tài năng và thực lực đáng kinh ngạc\Ncủa Sendoh, thành viên thiên tài]
Dialogue: 0,0:02:03.98,0:02:06.43,Default,,0,0,0,,[của đội bóng rổ Ryonan\Nđã bỏ lỡ cơ hội tham gia giải đấu toàn quốc.]
Dialogue: 0,0:02:10.06,0:02:11.15,Default,,0,0,0,,[Lúc này,]
Dialogue: 0,0:02:11.45,0:02:12.23,Default,,0,0,0,,[Uozumi cùng những thành viên lớp 12\Ncủa đội bóng rổ Ryonan]
Dialogue: 0,0:02:12.31,0:02:13.29,Default,,0,0,0,,[đúng lúc tuyên bố rút lui.]
Dialogue: 0,0:02:14.78,0:02:16.66,Default,,0,0,0,,[Bọn họ mong chờ rằng dưới sự dẫn dắt]
Dialogue: 0,0:02:16.82,0:02:19.43,Default,,0,0,0,,[của đội trưởng mới - Sendoh, có thể\Nmang đến cho toàn thể Ryonan khởi đầu mới.]
Dialogue: 0,0:02:27.35,0:02:29.69,Default,,0,0,0,,Đã không cần tôi\Nở một bên tạo khí thế cho bọn họ nữa.
Dialogue: 0,0:02:29.79,0:02:31.30,Default,,0,0,0,,Vì tôi tin rằng không lâu nữa,
Dialogue: 0,0:02:31.46,0:02:34.56,Default,,0,0,0,,danh tiếng của Sendoh\Nchắc chắn sẽ truyền đi khắp toàn quốc.
Dialogue: 0,0:02:35.55,0:02:36.15,Default,,0,0,0,,[Một mặt khác,]
Dialogue: 0,0:02:36.26,0:02:37.73,Default,,0,0,0,,[đội bóng rổ Shohoku\Nđang tiến hành tập huấn kịch liệt]
Dialogue: 0,0:02:37.90,0:02:40.16,Default,,0,0,0,,[để tiến hành xưng bá toàn quốc.]
Dialogue: 0,0:02:41.06,0:02:44.16,Default,,0,0,0,,[Thành viên Rukawa đường như đang muốn\Nđưa ra một quyết định quan trọng.]
Dialogue: 0,0:02:44.97,0:02:53.89,Default,,0,0,0,,[Học sinh cấp ba số một của Nhật Bản!]
Dialogue: 0,0:02:47.55,0:02:49.96,Default,,0,0,0,,[Học sinh cấp ba số một của Nhật Bản!]
Dialogue: 0,0:03:01.82,0:03:04.72,Default,,0,0,0,,Kiyota, lần này cậu thật sự\Nkhông cần đi theo đâu.
Dialogue: 0,0:03:05.09,0:03:08.32,Default,,0,0,0,,Đó là tên có thực lực mạnh thứ hai\Nđược mọi người cùng công nhận đấy.
Dialogue: 0,0:03:08.69,0:03:11.59,Default,,0,0,0,,Như vậy thì người cậu ta muốn quyết đấu\Nchắc chắn phải là Kiyota em.
Dialogue: 0,0:03:11.74,0:03:14.94,Default,,0,0,0,,Sao em có thể không đến xem\Nkẻ địch trong tương lai của mình chứ.
Dialogue: 0,0:03:16.87,0:03:18.14,Default,,0,0,0,,Chỉ bằng cậu?
Dialogue: 0,0:03:26.57,0:03:28.20,Default,,0,0,0,,Tôi rất lo lắng cho cậu đấy.
Dialogue: 0,0:03:28.34,0:03:31.38,Default,,0,0,0,,Thực lực của em cũng rất mạnh mà.
Dialogue: 0,0:03:35.31,0:03:36.60,Default,,0,0,0,,Khỉ!
Dialogue: 0,0:03:37.15,0:03:38.54,Default,,0,0,0,,Cái thằng này đứng ở đây
Dialogue: 0,0:03:38.54,0:03:40.38,Default,,0,0,0,,làm gì hả, đồ Khỉ Đầu Đỏ?
Dialogue: 0,0:03:41.70,0:03:43.72,Default,,0,0,0,,Hôm nay xem như ngày Chủ nhật đi làm nhỉ?
Dialogue: 0,0:03:45.17,0:03:47.05,Default,,0,0,0,,Bớt đi, cậu vẫn là học sinh cấp ba đấy.
Dialogue: 0,0:03:47.05,0:03:49.16,Default,,0,0,0,,Học sinh cấp ba không được chơi pachinko.
Dialogue: 0,0:03:52.00,0:03:54.00,Default,,0,0,0,,[Học sinh trung học không thể!]
Dialogue: 0,0:03:54.39,0:03:55.13,Default,,0,0,0,,Là Khỉ Hoang.
Dialogue: 0,0:03:55.35,0:03:56.48,Default,,0,0,0,,Khỉ Hoang của\Ntrường cấp ba trực thuộc Đại học Kainan.
Dialogue: 0,0:03:57.26,0:03:59.85,Default,,0,0,0,,Đứng bên cạnh chắc chắn là huấn luyện viên\Ncủa trường cấp ba trực thuộc Đại học Kainan.
Dialogue: 0,0:04:00.36,0:04:01.88,Default,,0,0,0,,[Huấn luyện viên?]
Dialogue: 0,0:04:02.36,0:04:04.30,Default,,0,0,0,,Đồ ngu, anh ta chỉ trông hơi già thôi,
Dialogue: 0,0:04:04.40,0:04:05.87,Default,,0,0,0,,thật ra vẫn là học sinh cấp ba đó.
Dialogue: 0,0:04:06.83,0:04:07.90,Default,,0,0,0,,[Hơi già?]
Dialogue: 0,0:04:08.03,0:04:09.05,Default,,0,0,0,,Lạ thật đấy,
Dialogue: 0,0:04:09.19,0:04:09.95,Default,,0,0,0,,tôi cứ nghĩ người của Shohoku
Dialogue: 0,0:04:10.07,0:04:12.33,Default,,0,0,0,,chắc chắn phải cố hết sức tập luyện mới đúng.
Dialogue: 0,0:04:12.47,0:04:13.87,Default,,0,0,0,,Buổi tập hôm nay đến chiều mới bắt đầu.
Dialogue: 0,0:04:14.65,0:04:16.81,Default,,0,0,0,,Với một đội bóng vào được giải đấu toàn quốc
Dialogue: 0,0:04:16.81,0:04:18.41,Default,,0,0,0,,thì mấy người tự tin thật đấy.
Dialogue: 0,0:04:20.45,0:04:22.89,Default,,0,0,0,,Thiên tài tôi đây là đại diện của tự tin.
Dialogue: 0,0:04:23.85,0:04:25.76,Default,,0,0,0,,Vậy thì tôi có thể cho cậu biết\Nmột cách chắc chắn rằng
Dialogue: 0,0:04:25.86,0:04:27.97,Default,,0,0,0,,các cậu sẽ không thể chịu nổi\Ntrong giải đấu toàn quốc.
Dialogue: 0,0:04:29.22,0:04:32.48,Default,,0,0,0,,Thấy Shohoku bọn tôi có thể tham gia giải\Nđấu toàn quốc nên cậu thấy không cân bằng,
Dialogue: 0,0:04:32.60,0:04:33.61,Default,,0,0,0,,phải không?
Dialogue: 0,0:04:33.69,0:04:35.84,Default,,0,0,0,,Cái gì? Cậu nói gì?
Dialogue: 0,0:04:35.96,0:04:37.56,Default,,0,0,0,,Sao tôi phải thấy không cân bằng chứ,\Ncái đồ ngu này.
Dialogue: 0,0:04:37.67,0:04:39.81,Default,,0,0,0,,Chúng tôi tham gia giải đấu toàn quốc\Nvới thành tích hạng nhất đấy.
Dialogue: 0,0:04:39.81,0:04:44.29,Default,,0,0,0,,Các cậu chỉ là hạng hai thua chúng tôi,\Nchẳng lẽ cậu quên rồi à?
Dialogue: 0,0:04:46.61,0:04:49.29,Default,,0,0,0,,Không phải chứ,\Ncậu cũng muốn tham gia giải đấu?
Dialogue: 0,0:04:49.95,0:04:53.02,Default,,0,0,0,,[Cái thằng này...]\NĐể tôi nói thẳng với cậu.
Dialogue: 0,0:04:53.02,0:04:54.23,Default,,0,0,0,,Vận động viên bóng rổ với thực lực như cậu
Dialogue: 0,0:04:54.23,0:04:55.65,Default,,0,0,0,,thì cả nước này chỗ nào cũng có.
Dialogue: 0,0:04:55.65,0:04:56.95,Default,,0,0,0,,Nếu cậu không muốn làm\Ntỉnh Kanagawa chúng ta mất mặt
Dialogue: 0,0:04:57.15,0:04:59.11,Default,,0,0,0,,thì đừng có đến tiệm pachinko chơi,
Dialogue: 0,0:04:59.20,0:05:01.38,Default,,0,0,0,,mau đến nơi khác\Nđể cố gắng tập luyện đi, biết chưa hả?
Dialogue: 0,0:05:01.50,0:05:05.45,Default,,0,0,0,,Thùng cơm siêu to khổng lồ của bóng rổ.
Dialogue: 0,0:05:06.31,0:05:07.73,Default,,0,0,0,,Cái con Khỉ Hoang này...
Dialogue: 0,0:05:07.73,0:05:09.62,Default,,0,0,0,,Cậu là đồ Khỉ Đầu Đỏ.
Dialogue: 0,0:05:11.51,0:05:13.19,Default,,0,0,0,,Để cẩn thận thì tôi phải nói rõ trước với cậu.
Dialogue: 0,0:05:13.38,0:05:16.96,Default,,0,0,0,,Trường cấp ba trực thuộc Đại học Kainan chúng tôi\Nlà đội năm ngoái giành được hạng tư toàn quốc đấy.
Dialogue: 0,0:05:17.10,0:05:19.42,Default,,0,0,0,,Thảm như vậy mới giành được hạng tư,\Ncũng bị người khác đánh bại,
Dialogue: 0,0:05:19.51,0:05:21.54,Default,,0,0,0,,thế thì có gì đáng để đắc ý chứ.
Dialogue: 0,0:05:23.54,0:05:25.05,Default,,0,0,0,,Cậu nói gì?
Dialogue: 0,0:05:25.05,0:05:28.58,Default,,0,0,0,,Đội bóng rổ Shohoku được thiên tài\Ntôi đây dẫn dắt được hạng nhất toàn quốc đấy.
Dialogue: 0,0:05:28.58,0:05:36.51,Default,,0,0,0,,- Xưng bá toàn quốc, xưng bá toàn quốc, xưng bá toàn quốc.\N- Biết chưa hả?
Dialogue: 0,0:05:36.63,0:05:38.86,Default,,0,0,0,,Giấc mơ xưng bá toàn quốc\NTinh Tinh Bự suốt ngày nói đi nói lại
Dialogue: 0,0:05:39.06,0:05:42.14,Default,,0,0,0,,sẽ đạt được dưới tay\Nthiên tài Sakuragi tôi đây.
Dialogue: 0,0:05:42.27,0:05:44.65,Default,,0,0,0,,Chém cũng có giới hạn thôi,\Ncậu nghĩ tôi là đồ ngu à?
Dialogue: 0,0:05:44.65,0:05:46.34,Default,,0,0,0,,Cái đồ cực ngu này.
Dialogue: 0,0:05:46.49,0:05:48.62,Default,,0,0,0,,Cậu nghe đây, thứ gọi là xưng bá toàn quốc là...
Dialogue: 0,0:05:50.54,0:05:55.98,Default,,0,0,0,,Cậu cũng đã chơi trong giải đấu toàn quốc đâu,\Nđừng có chém nữa, chúng ta đi thôi.
Dialogue: 0,0:05:56.59,0:05:57.99,Default,,0,0,0,,Đồ trung niên, anh muốn đi đâu vậy?
Dialogue: 0,0:05:59.86,0:06:02.96,Default,,0,0,0,,Sakuragi, cậu từng nghe nói về\N"Ngôi sao của Aichi" chưa?
Dialogue: 0,0:06:04.71,0:06:05.62,Default,,0,0,0,,Chưa.
Dialogue: 0,0:06:05.76,0:06:09.05,Default,,0,0,0,,- Tôi biết ngay cậu chưa từng nghe nói đến mà.\N- Cậu có muốn đi xem luôn không?
Dialogue: 0,0:06:09.84,0:06:11.94,Default,,0,0,0,,Xem thực lực của toàn quốc là như thế nào.
Dialogue: 0,0:06:20.68,0:06:24.77,Default,,0,0,0,,Hanamichi đã rơi vào thế giới bóng rổ rồi.
Dialogue: 0,0:06:25.49,0:06:26.88,Default,,0,0,0,,Cũng khó trách,
Dialogue: 0,0:06:26.88,0:06:29.97,Default,,0,0,0,,dù sao nó cũng được coi là\Ntuyển thủ được chú ý trong thế hệ này.
Dialogue: 0,0:06:30.14,0:06:33.58,Default,,0,0,0,,Thật ra nó vẫn là một người ngoài ngành,\Nmọi người bị nó dọa cho ngã lăn quay thôi.
Dialogue: 0,0:06:33.67,0:06:36.56,Default,,0,0,0,,Từ đó có thể thấy rằng\Nbóng rổ là một môn thể thao thú vị.
Dialogue: 0,0:06:41.75,0:06:43.54,Default,,0,0,0,,Được rồi,\Nchúng ta cũng bắt đầu chiến đấu thôi.
Dialogue: 0,0:06:43.65,0:06:44.81,Default,,0,0,0,,Chúng ta phải thắng.
Dialogue: 0,0:06:46.78,0:06:51.12,Default,,0,0,0,,Cố lên!
Dialogue: 0,0:06:51.15,0:06:54.09,Default,,0,0,0,,[Cảm ơn đã tới ngày hôm nay]\N[Thay đổi sản phẩm mới]
Dialogue: 0,0:07:01.28,0:07:03.60,Default,,0,0,0,,[Nhắc nhở một lần nữa] [Thanh niên\Nchưa đủ 18 tuổi không được chơi pachinko]
Dialogue: 0,0:07:04.35,0:07:08.93,Default,,0,0,0,,Cuối cùng thì mấy cậu muốn tôi nói bao nhiêu lần mới hiểu hả?\NThật là, dạo này học sinh cấp ba đúng là lộn xộn.
Dialogue: 0,0:07:09.88,0:07:10.94,Default,,0,0,0,,Chết tiệt.
Dialogue: 0,0:07:11.65,0:07:15.90,Default,,0,0,0,,- Uổng công hôm nay chúng ta tự tin như vậy.\N- Vận may đúng là quá kém.
Dialogue: 0,0:07:21.14,0:07:23.88,Default,,0,0,0,,Tôi lấy hai hộp Bento, hai lon Coca.
Dialogue: 0,0:07:23.99,0:07:26.11,Default,,0,0,0,,Thằng nhóc thối,\Ncậu chỉ mang theo có 500 yên thôi đó.
Dialogue: 0,0:07:26.16,0:07:27.95,Default,,0,0,0,,Chẳng có bao nhiêu tiền\Nmà còn dám đi theo bọn tôi,
Dialogue: 0,0:07:28.13,0:07:29.79,Default,,0,0,0,,cuối cùng thì dây thần kinh của cậu\Nlàm từ gì thế?
Dialogue: 0,0:07:31.54,0:07:33.44,Default,,0,0,0,,Sẽ có ngày tôi trả lại gấp ba\Nsố tiền tôi mượn cậu.
Dialogue: 0,0:07:33.64,0:07:35.72,Default,,0,0,0,,Sẽ có một ngày là có ý gì?
Dialogue: 0,0:07:35.86,0:07:37.45,Default,,0,0,0,,Tôi không cho cậu có suy nghĩ quỵt nợ đâu đấy.
Dialogue: 0,0:07:37.84,0:07:38.71,Default,,0,0,0,,Như vậy là được rồi.
Dialogue: 0,0:07:38.81,0:07:40.64,Default,,0,0,0,,Trong giải đấu toàn quốc, khi đấu với các cậu,
Dialogue: 0,0:07:40.68,0:07:44.67,Default,,0,0,0,,tôi có thể nhường một chút chút,\Ncoi như là tiền lãi.
Dialogue: 0,0:07:45.52,0:07:46.73,Default,,0,0,0,,Cậu đừng có đùa nữa.
Dialogue: 0,0:07:46.73,0:07:48.99,Default,,0,0,0,,Chỉ bằng cái thằng như cậu á?\NTôi còn chẳng thèm để ý đến cậu nữa là.
Dialogue: 0,0:07:49.60,0:07:51.73,Default,,0,0,0,,Shohoku các cậu chỉ có một người\Nđủ tư cách làm đối thủ của tôi,
Dialogue: 0,0:07:51.84,0:07:53.25,Default,,0,0,0,,là Rukawa.
Dialogue: 0,0:07:53.99,0:07:55.66,Default,,0,0,0,,Cậu ta sẽ bị tôi đánh bại,
Dialogue: 0,0:07:56.49,0:07:59.92,Default,,0,0,0,,sau đó tôi sẽ trở thành\NMVP trong giải đấu toàn quốc.
Dialogue: 0,0:08:03.56,0:08:06.42,Default,,0,0,0,,Cậu? MVP?
Dialogue: 0,0:08:06.42,0:08:11.03,Default,,0,0,0,,MVP, MVP, MVP, MVP....
Dialogue: 0,0:08:11.14,0:08:12.84,Default,,0,0,0,,[Thằng này nói thật à?]
Dialogue: 0,0:08:13.17,0:08:15.64,Default,,0,0,0,,Cái thằng người ngoài ngành\Nsiêu cấp như cậu thì không thể nào.
Dialogue: 0,0:08:15.87,0:08:18.21,Default,,0,0,0,,Cậu có tư cách gì nói khoác như thường vậy hả?
Dialogue: 0,0:08:18.30,0:08:21.15,Default,,0,0,0,,Trong từ điển của thiên tài\Nkhông có hai chữ "không thể".
Dialogue: 0,0:08:21.92,0:08:24.62,Default,,0,0,0,,Tôi không nói chuyện với cậu nữa, tôi muốn ăn.
Dialogue: 0,0:08:25.02,0:08:28.58,Default,,0,0,0,,- Đó là Bento của tôi!\N- Đừng có càm ràm nữa, mỗi người một hộp.
Dialogue: 0,0:08:28.75,0:08:30.76,Default,,0,0,0,,Còn nợ tiền tôi đó,\Nsao cậu có thể ăn Bento của tôi?
Dialogue: 0,0:08:30.86,0:08:31.86,Default,,0,0,0,,Đúng rồi, Sakuragi.
Dialogue: 0,0:08:32.68,0:08:35.10,Default,,0,0,0,,Chân của Akagi sao rồi?
Dialogue: 0,0:08:35.21,0:08:36.10,Default,,0,0,0,,Chẳng phải là bị trẹo chân à? Đã ổn chưa?
Dialogue: 0,0:08:37.75,0:08:38.95,Default,,0,0,0,,Đã không còn việc gì nữa.
Dialogue: 0,0:08:39.26,0:08:40.92,Default,,0,0,0,,Bây giờ Tinh Tinh Bự chuẩn bị ra oai đấy.
Dialogue: 0,0:08:41.05,0:08:44.02,Default,,0,0,0,,Là động vật hoang dã mà,\Nkhả năng hồi phục cũng rất nhanh.
Dialogue: 0,0:08:44.18,0:08:46.69,Default,,0,0,0,,Đúng, đúng, cũng giống cậu đấy.
Dialogue: 0,0:08:47.17,0:08:48.33,Default,,0,0,0,,Cậu nói gì hả, đồ ngu.
Dialogue: 0,0:08:48.46,0:08:50.85,Default,,0,0,0,,Vốn là vậy mà, chẳng phải cậu là Khỉ Hoang sao?
Dialogue: 0,0:08:50.98,0:08:52.36,Default,,0,0,0,,Vậy còn huấn luyện viên Anzai?
Dialogue: 0,0:08:53.49,0:08:55.63,Default,,0,0,0,,Thầy ấy đã bình phục rồi, còn mập thêm nữa.
Dialogue: 0,0:08:55.76,0:08:57.25,Default,,0,0,0,,Câu sau hơi thừa đó.
Dialogue: 0,0:09:06.64,0:09:08.18,Default,,0,0,0,,Xin lỗi,
Dialogue: 0,0:09:08.44,0:09:11.09,Default,,0,0,0,,trận đấu quan trọng nhất\Nmà tôi lại không có mặt.
Dialogue: 0,0:09:27.95,0:09:32.06,Default,,0,0,0,,Cậu đến tìm tôi để nói gì?
Dialogue: 0,0:09:35.52,0:09:36.68,Default,,0,0,0,,Rukawa.
Dialogue: 0,0:09:50.27,0:09:51.33,Default,,0,0,0,,[Nagoya,]
Dialogue: 0,0:09:51.97,0:09:56.27,Default,,0,0,0,,[sân đấu vòng loại\Ncủa các đội bóng rổ tỉnh Aichi.]
Dialogue: 0,0:10:01.08,0:10:02.98,Default,,0,0,0,,Đã thấy chưa?
Dialogue: 0,0:10:03.79,0:10:05.31,Default,,0,0,0,,Là Kanagawa.
Dialogue: 0,0:10:06.02,0:10:09.01,Default,,0,0,0,,Thật kìa, là người của\Ntrường cấp ba trực thuộc Đại học Kainan.
Dialogue: 0,0:10:09.18,0:10:10.59,Default,,0,0,0,,Năm nay bọn họ lại vào giải đấu toàn quốc.
Dialogue: 0,0:10:10.70,0:10:11.80,Default,,0,0,0,,Không hổ là vị vua Kainan.
Dialogue: 0,0:10:12.26,0:10:13.42,Default,,0,0,0,,Tuyệt thật đấy.
Dialogue: 0,0:10:13.73,0:10:16.85,Default,,0,0,0,,Ở Nagoya mà anh Maki cũng nổi tiếng như vậy.
Dialogue: 0,0:10:16.97,0:10:18.91,Default,,0,0,0,,Giỏi quá đi.
Dialogue: 0,0:10:21.99,0:10:23.51,Default,,0,0,0,,[Đúng là làm người ta ngưỡng mộ.]
Dialogue: 0,0:10:23.85,0:10:26.80,Default,,0,0,0,,[Không lâu nữa mình cũng sẽ như anh ta.]
Dialogue: 0,0:10:26.97,0:10:29.97,Default,,0,0,0,,Lại ở đó mà nằm mơ giữa ban ngày,\Nvừa nhìn là tôi biết ngay.
Dialogue: 0,0:10:31.20,0:10:32.86,Default,,0,0,0,,Cậu nói gì?
Dialogue: 0,0:10:33.07,0:10:35.10,Default,,0,0,0,,Hai cậu đang làm gì vậy?\NTrận đấu sắp bắt đầu rồi đó.
Dialogue: 0,0:10:35.10,0:10:37.08,Default,,0,0,0,,- Mau đi thôi.\N- Vâng.
Dialogue: 0,0:10:39.00,0:10:41.31,Default,,0,0,0,,Cái tên gọi là Ngôi sao của Aichi\Ncũng sẽ xuất hiện à?
Dialogue: 0,0:10:41.31,0:10:42.18,Default,,0,0,0,,Đó là người thế nào?
Dialogue: 0,0:10:42.64,0:10:44.07,Default,,0,0,0,,Cậu ta là học sinh lớp 12 của Học viện Aiwa,
Dialogue: 0,0:10:44.31,0:10:47.31,Default,,0,0,0,,tên là Moroboshi Dai,\Nmọi người gọi cậu ta là Ngôi Sao của Aichi.
Dialogue: 0,0:10:48.21,0:10:51.33,Default,,0,0,0,,Nếu Shohoku các cậu thật sự\Nmuốn trở thành đội bóng nổi tiếng toàn quốc
Dialogue: 0,0:10:51.45,0:10:53.71,Default,,0,0,0,,thì người này\Nlà đối tượng các cậu phải đánh bại.
Dialogue: 0,0:10:54.57,0:10:56.04,Default,,0,0,0,,Đối tượng phải đánh bại.
Dialogue: 0,0:11:00.21,0:11:01.54,Default,,0,0,0,,Ban nãy là tiếng gì vậy?
Dialogue: 0,0:11:02.01,0:11:03.45,Default,,0,0,0,,Không biết đã xảy ra chuyện gì.
Dialogue: 0,0:11:06.61,0:11:08.13,Default,,0,0,0,,Tránh ra, tránh ra, tránh ra, tránh ra.
Dialogue: 0,0:11:08.89,0:11:10.44,Default,,0,0,0,,Cẩn thận một chút.
Dialogue: 0,0:11:13.05,0:11:13.98,Default,,0,0,0,,Là Moroboshi.
Dialogue: 0,0:11:14.55,0:11:15.65,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:11:15.80,0:11:17.86,Default,,0,0,0,,Ngôi sao của Aichi anh nói là người đó?
Dialogue: 0,0:11:19.17,0:11:19.90,Default,,0,0,0,,Maki?
Dialogue: 0,0:11:20.95,0:11:22.97,Default,,0,0,0,,Moroboshi, cậu sao vậy?
Dialogue: 0,0:11:24.40,0:11:26.08,Default,,0,0,0,,Cuối cùng thì có chuyện gì?
Dialogue: 0,0:11:26.86,0:11:28.59,Default,,0,0,0,,Chết tiệt, tên chết tiệt.
Dialogue: 0,0:11:29.16,0:11:31.09,Default,,0,0,0,,Tôi chắc chắn sẽ không tha cho cậu ta,
Dialogue: 0,0:11:31.37,0:11:33.33,Default,,0,0,0,,cái tên lớp 10 đó.
Dialogue: 0,0:11:33.37,0:11:34.27,Default,,0,0,0,,Lớp 10?
Dialogue: 0,0:11:37.31,0:11:38.37,Default,,0,0,0,,Mỹ?
Dialogue: 0,0:11:51.32,0:11:53.59,Default,,0,0,0,,Em muốn đi Mỹ.
Dialogue: 0,0:11:59.59,0:12:01.11,Default,,0,0,0,,Điểm số này là sao vậy?
Dialogue: 0,0:12:02.99,0:12:04.96,Default,,0,0,0,,Học viện Aiwa xếp hạng tư toàn quốc
Dialogue: 0,0:12:05.76,0:12:08.03,Default,,0,0,0,,mà lại bị dẫn trước 20 điểm trong vòng loại?
Dialogue: 0,0:12:09.03,0:12:11.80,Default,,0,0,0,,Cái tên lớp 10 đó đâu?
Dialogue: 0,0:12:12.04,0:12:15.53,Default,,0,0,0,,Người mà Ngôi sao của Aichi nói\Nđang ở chỗ nào?
Dialogue: 0,0:12:19.37,0:12:20.83,Default,,0,0,0,,Có vẻ là đó.
Dialogue: 0,0:12:23.94,0:12:25.40,Default,,0,0,0,,Số 15.
Dialogue: 0,0:12:54.67,0:12:55.96,Default,,0,0,0,,Mỹ?
Dialogue: 0,0:13:06.18,0:13:08.67,Default,,0,0,0,,Cậu muốn đi du học sao?
Dialogue: 0,0:13:13.29,0:13:15.02,Default,,0,0,0,,Em muốn trở nên mạnh hơn.
Dialogue: 0,0:13:17.56,0:13:19.02,Default,,0,0,0,,Chỉ như vậy thôi.
Dialogue: 0,0:13:28.90,0:13:30.93,Default,,0,0,0,,Tôi không đồng ý cho cậu đi.
Dialogue: 0,0:13:42.74,0:13:45.07,Default,,0,0,0,,Chênh 30 điểm rồi!
Dialogue: 0,0:13:45.81,0:13:47.58,Default,,0,0,0,,Cái quái gì vậy, sao lại như thế này?
Dialogue: 0,0:13:47.71,0:13:52.68,Default,,0,0,0,,Mau cản lại, muốn tôi nói mấy lần mới hiểu hả?
Dialogue: 0,0:13:54.22,0:13:54.83,Default,,0,0,0,,Mau phòng thủ!
Dialogue: 0,0:13:54.83,0:13:56.36,Default,,0,0,0,,Phòng thủ bên trong!
Dialogue: 0,0:13:59.03,0:14:00.02,Default,,0,0,0,,Đừng để cậu ta vào trong.
Dialogue: 0,0:14:00.67,0:14:01.76,Default,,0,0,0,,Đã nghe chưa?
Dialogue: 0,0:14:01.78,0:14:03.99,Default,,0,0,0,,Tên đó không phải là người\Ncác cậu có thể tùy tiện ngăn cản.
Dialogue: 0,0:14:04.21,0:14:05.40,Default,,0,0,0,,Đừng để cậu ta dễ dàng chuyền bóng!
Dialogue: 0,0:14:08.21,0:14:09.44,Default,,0,0,0,,Tấn công gọng kìm, mau tấn công gọng kìm.
Dialogue: 0,0:14:09.58,0:14:10.74,Default,,0,0,0,,Làm sao đây?
Dialogue: 0,0:14:12.07,0:14:13.12,Default,,0,0,0,,Một người cũng không phòng thủ được.
Dialogue: 0,0:14:13.28,0:14:14.77,Default,,0,0,0,,Bao vây cậu ta lại, đừng để cậu ta di chuyển!
Dialogue: 0,0:14:15.11,0:14:18.23,Default,,0,0,0,,Đá bay bọn họ đi, Hiroshi!
Dialogue: 0,0:14:37.12,0:14:38.85,Default,,0,0,0,,Morishige Hiroshi,
Dialogue: 0,0:14:39.84,0:14:42.71,Default,,0,0,0,,cao 199 cm, nặng 100kg,
Dialogue: 0,0:14:43.17,0:14:45.00,Default,,0,0,0,,cậu ấy lại còn chỉ là học sinh lớp 10 thôi chứ.
Dialogue: 0,0:14:46.28,0:14:49.69,Default,,0,0,0,,Cậu ấy là một viên ngọc quý\Ncủa giới bóng rổ Nhật Bản trong tương lai.
Dialogue: 0,0:15:00.49,0:15:04.08,Default,,0,0,0,,Cậu ta muốn treo trên đó đến bao giờ hả?\NTrọng tài không thấy sao?
Dialogue: 0,0:15:05.56,0:15:08.00,Default,,0,0,0,,Số 15 phạm lỗi kỹ thuật.
Dialogue: 0,0:15:09.13,0:15:11.86,Default,,0,0,0,,Tật xấu lại tái phát.
Dialogue: 0,0:15:12.83,0:15:17.12,Default,,0,0,0,,[Tiến sĩ T - Bài giảng về bóng rổ]
Dialogue: 0,0:15:13.80,0:15:14.59,Default,,0,0,0,,Đã lâu không gặp.
Dialogue: 0,0:15:15.43,0:15:16.23,Default,,0,0,0,,Mệt quá.
Dialogue: 0,0:15:16.80,0:15:19.83,Default,,0,0,0,,Trừ nguy cơ bản thân và đối thủ bị thương,
Dialogue: 0,0:15:19.93,0:15:21.89,Default,,0,0,0,,không thì hành động bám lấy khung rổ\Nhoặc treo trên khung
Dialogue: 0,0:15:22.01,0:15:24.00,Default,,0,0,0,,đều coi là phạm lỗi kỹ thuật.
Dialogue: 0,0:15:24.08,0:15:25.99,Default,,0,0,0,,Điều này nói rằng úp rổ là rất tốt
Dialogue: 0,0:15:26.98,0:15:29.87,Default,,0,0,0,,nhưng đừng có quá đắc ý,\Nkhông thì sẽ chịu thiệt đấy.
Dialogue: 0,0:15:29.99,0:15:32.29,Default,,0,0,0,,Học viện Aiwa tạm dừng.
Dialogue: 0,0:15:35.98,0:15:36.94,Default,,0,0,0,,Hiroshi,
Dialogue: 0,0:15:37.04,0:15:38.27,Default,,0,0,0,,chẳng phải tôi đã nói với cậu từ trước rồi à?
Dialogue: 0,0:15:38.38,0:15:40.79,Default,,0,0,0,,Không được treo trên rổ quá lâu,
Dialogue: 0,0:15:40.92,0:15:43.82,Default,,0,0,0,,như vậy thì trọng tài sẽ xử phạm lỗi,\Nhiểu chưa?
Dialogue: 0,0:15:44.60,0:15:45.43,Default,,0,0,0,,Chú à,
Dialogue: 0,0:15:45.46,0:15:47.02,Default,,0,0,0,,khi tôi úp rổ,
Dialogue: 0,0:15:47.14,0:15:49.47,Default,,0,0,0,,chẳng phải là đều có hai,\Nba người nằm trên sàn sao?
Dialogue: 0,0:15:56.65,0:15:59.64,Default,,0,0,0,,Tôi thích nhìn dáng vẻ của bọn họ từ trên cao.
Dialogue: 0,0:16:01.05,0:16:02.54,Default,,0,0,0,,[Công nghiệp Meihou.]
Dialogue: 0,0:16:03.36,0:16:04.95,Default,,0,0,0,,[Morishige Hiroshi.]
Dialogue: 0,0:16:05.46,0:16:07.58,Default,,0,0,0,,[Là cậu ta đánh bại Ngôi sao của Aichi sao?]
Dialogue: 0,0:16:11.23,0:16:14.68,Default,,0,0,0,,[Học viện Aiwa\Ndùng cơ hội phạm lỗi kỹ thuật của Morishige]
Dialogue: 0,0:16:14.68,0:16:16.68,Default,,0,0,0,,[để ném vào hai quả bóng phạt liên tiếp,]
Dialogue: 0,0:16:16.86,0:16:18.72,Default,,0,0,0,,[làm điểm số thành 58-29.]
Dialogue: 0,0:16:19.46,0:16:23.57,Default,,0,0,0,,[Sau đó, Ngôi sao của Aichi - Moroboshi\Nquay lại trận đấu cố gắng xoay chuyển tình thế.]
Dialogue: 0,0:16:36.32,0:16:37.79,Default,,0,0,0,,Nhanh lên, về phòng thủ.
Dialogue: 0,0:16:39.29,0:16:40.77,Default,,0,0,0,,Chúng ta chắc chắn có thể thắng lại.
Dialogue: 0,0:16:40.89,0:16:43.69,Default,,0,0,0,,Chúng ta phải vào được giải đấu toàn quốc\Nvới thành tích hạng nhất.
Dialogue: 0,0:16:43.82,0:16:45.73,Default,,0,0,0,,[Moroboshi, trông cậy vào cậu cả đấy.]
Dialogue: 0,0:16:59.53,0:17:02.16,Default,,0,0,0,,Đó là hậu vệ ghi điểm có trình độ toàn quốc.
Dialogue: 0,0:17:02.77,0:17:03.40,Default,,0,0,0,,Thì ra là vậy.
Dialogue: 0,0:17:03.54,0:17:05.90,Default,,0,0,0,,Chẳng trách bọn họ\Ngọi anh ta là Ngôi sao của Aichi.
Dialogue: 0,0:17:07.00,0:17:07.76,Default,,0,0,0,,Nhưng...
Dialogue: 0,0:17:10.44,0:17:11.40,Default,,0,0,0,,[Nửa sau của trận đấu,]
Dialogue: 0,0:17:11.50,0:17:14.10,Default,,0,0,0,,[nhờ sự năng nổ của\NNgôi sao của Aichi quay lại trên sân...]
Dialogue: 0,0:17:23.03,0:17:24.10,Default,,0,0,0,,Nhanh lên, nhanh lên.
Dialogue: 0,0:17:25.17,0:17:26.06,Default,,0,0,0,,Ném hay lắm.
Dialogue: 0,0:17:26.48,0:17:28.47,Default,,0,0,0,,[Khoảng cách điểm số càng lúc càng rút ngắn.]
Dialogue: 0,0:17:36.79,0:17:38.15,Default,,0,0,0,,Số 15 đội trắng.
Dialogue: 0,0:17:40.16,0:17:44.04,Default,,0,0,0,,[Morishige Hiroshi của công nghiệp Meihou\Nxưng bá dưới rổ bị đuổi khỏi sân do phạm lỗi năm lần.]
Dialogue: 0,0:17:44.16,0:17:48.16,Default,,0,0,0,,[Học viện Aiwa vững vàng đuổi theo.]
Dialogue: 0,0:17:51.74,0:17:54.01,Default,,0,0,0,,[Sau một trận chiến kịch liệt,\Ndo khoảng cách của nửa đầu trận quá lớn]
Dialogue: 0,0:17:54.28,0:17:56.94,Default,,0,0,0,,[nên cuối cùng học viện Aiwa\Nkhông thể chuyển bại thành thắng.]
Dialogue: 0,0:18:03.19,0:18:06.56,Default,,0,0,0,,[Công nghiệp Meihou lần đầu giành được]
Dialogue: 0,0:18:06.70,0:18:08.80,Default,,0,0,0,,[tư cách tham gia giải đấu toàn quốc\Nvới thành tích hạng nhất tỉnh Aichi.]
Dialogue: 0,0:18:10.09,0:18:11.79,Default,,0,0,0,,[Tuy Học viện Aiwa\Ncũng giành được tư cách tham gia thi đấu]
Dialogue: 0,0:18:11.99,0:18:12.66,Default,,0,0,0,,[nhưng trong trận đấu này,]
Dialogue: 0,0:18:12.69,0:18:14.66,Default,,0,0,0,,[bọn họ đã hoàn toàn thua\Nmột người mới lớp 10 của công nghiệp Meihou.]
Dialogue: 0,0:18:15.31,0:18:23.62,Default,,0,0,0,,[Màn thể hiện của Morishige Hiroshi đã mang\Nđến sự xung động khác biệt cho sân bóng rổ.]
Dialogue: 0,0:18:28.63,0:18:30.93,Default,,0,0,0,,Thật không ngờ có người như thế tồn tại.
Dialogue: 0,0:18:31.66,0:18:35.57,Default,,0,0,0,,Có khi hào quan trong giải đấu toàn quốc\Ncủa các cậu sẽ bị cậu ta che mất.
Dialogue: 0,0:18:35.77,0:18:37.68,Default,,0,0,0,,Cậu ta là gì chứ.
Dialogue: 0,0:18:37.83,0:18:38.78,Default,,0,0,0,,Qua một bên, đồ ngu.
Dialogue: 0,0:18:38.92,0:18:41.63,Default,,0,0,0,,Vua rời sân.
Dialogue: 0,0:18:41.72,0:18:44.28,Default,,0,0,0,,[Tôi thấy người này e là\Nđến Takasago cũng không thể ngăn cản.]
