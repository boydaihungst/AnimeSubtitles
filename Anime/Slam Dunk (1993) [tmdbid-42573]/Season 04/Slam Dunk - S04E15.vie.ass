Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.49,0:00:20.51,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.69,0:00:23.94,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.79,0:00:30.31,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.54,0:00:36.58,Default,,0,0,0,,♫ Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.50,0:00:44.34,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.14,0:00:51.14,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.33,0:00:57.14,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.23,0:01:03.21,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.30,0:01:10.04,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.98,0:01:19.93,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:20.05,0:01:26.08,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.22,0:01:31.99,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:32.09,0:01:40.49,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:56.59,0:01:59.02,Default,,0,0,0,,[Để chuẩn bị cho giải đấu toàn quốc\Nbắt đầu vào mười ngày sau,]
Dialogue: 0,0:01:59.04,0:02:01.65,Default,,0,0,0,,[đội bóng rổ Shohoku\Nđã quyết định đến tỉnh Shizuoka]
Dialogue: 0,0:02:01.73,0:02:04.52,Default,,0,0,0,,[theo sự sắp xếp của huấn luyện viên Anzai\Nđể cùng tập luyện]
Dialogue: 0,0:02:04.64,0:02:06.06,Default,,0,0,0,,[trong một tuần\Nvới đội bóng rổ trường cấp ba Jousei]
Dialogue: 0,0:02:06.08,0:02:07.99,Default,,0,0,0,,[có huấn luyện viên\Nlà đàn em của huấn luyện viên Anzai.]
Dialogue: 0,0:02:12.83,0:02:15.63,Default,,0,0,0,,[Hanamichi ép mượn tiền làm thêm\Ncủa bọn Yohei,]
Dialogue: 0,0:02:15.65,0:02:18.70,Default,,0,0,0,,[định đi tỉnh Shizouka vui vẻ với mọi người.]
Dialogue: 0,0:02:20.50,0:02:23.54,Default,,0,0,0,,Sakuragi phải ở lại.
Dialogue: 0,0:02:24.64,0:02:33.65,Default,,0,0,0,,[Thử thách với 20 nghìn quả bóng]
Dialogue: 0,0:02:27.17,0:02:29.17,Default,,0,0,0,,[Thử thách với 20 nghìn quả bóng.]
Dialogue: 0,0:02:39.86,0:02:42.81,Default,,0,0,0,,- Đây là yêu cầu của huấn luyện viên.\N- Huấn luyện viên?
Dialogue: 0,0:02:45.56,0:02:47.99,Default,,0,0,0,,Còn mười ngày nữa là đến giải đấu toàn quốc,
Dialogue: 0,0:02:48.30,0:02:52.60,Default,,0,0,0,,nhưng người mới học Sakuragi\Ncó thể tiến bộ vượt bậc trong mười ngày này.
Dialogue: 0,0:02:53.37,0:02:56.77,Default,,0,0,0,,Năng lực học tập của cậu ấy rất giỏi,\Ngiỏi đến mức khiến người khác ngạc nhiên.
Dialogue: 0,0:02:58.90,0:03:03.47,Default,,0,0,0,,Thay vì để cậu ấy\Ntập luyện với mọi người trong mười ngày
Dialogue: 0,0:03:03.65,0:03:06.66,Default,,0,0,0,,thì chi bằng để cậu ấy\Ncó huấn luyện một mình sẽ hay hơn.
Dialogue: 0,0:03:07.32,0:03:11.22,Default,,0,0,0,,Sự trưởng thành của cậu ấy có ích cho việc\Nnâng cao lực chiến của cả đội bóng.
Dialogue: 0,0:03:15.31,0:03:17.24,Default,,0,0,0,,- Là vậy đấy.\N- Hóa ra là vậy.
Dialogue: 0,0:03:17.35,0:03:18.70,Default,,0,0,0,,Tên đó
Dialogue: 0,0:03:18.83,0:03:22.26,Default,,0,0,0,,cậu ta được một mình huấn luyện viên Anzai\Nchỉ đạo trong mười ngày.
Dialogue: 0,0:03:22.50,0:03:23.97,Default,,0,0,0,,Xa xỉ quá đi.
Dialogue: 0,0:03:24.15,0:03:25.98,Default,,0,0,0,,Ưu đãi như vậy cho Sakuragi\Nthì đúng là lãng phí quá.
Dialogue: 0,0:03:26.42,0:03:28.68,Default,,0,0,0,,Được sự chỉ đạo đặc biệt một một\Ncủa huấn luyện viên Anzai,
Dialogue: 0,0:03:28.82,0:03:30.58,Default,,0,0,0,,biết vậy thì tôi đã đòi ở lại từ trước rồi.
Dialogue: 0,0:03:30.60,0:03:32.51,Default,,0,0,0,,Cái gì? Cậu muốn trốn tránh à Mitsui?
Dialogue: 0,0:03:32.85,0:03:34.05,Default,,0,0,0,,Không khéo chút nào,
Dialogue: 0,0:03:34.08,0:03:36.69,Default,,0,0,0,,buổi huấn luyện địa ngục đã bắt đầu\Ntừ bây giờ rồi.
Dialogue: 0,0:03:40.14,0:03:42.04,Default,,0,0,0,,Mông cách đất 1cm.
Dialogue: 0,0:03:42.07,0:03:43.28,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:03:43.93,0:03:46.83,Default,,0,0,0,,Đừng vậy mà, Akagi tôi xin cậu đấy!
Dialogue: 0,0:03:46.91,0:03:48.02,Default,,0,0,0,,Hình như ở đây...
Dialogue: 0,0:03:53.19,0:03:54.56,Default,,0,0,0,,Akagi, đừng như vậy.
Dialogue: 0,0:03:54.79,0:03:56.52,Default,,0,0,0,,1cm.
Dialogue: 0,0:04:06.91,0:04:09.12,Default,,0,0,0,,[Vứt xuống mặc kệ]
Dialogue: 0,0:04:11.88,0:04:13.31,Default,,0,0,0,,[Không thể tha thứ được.]
Dialogue: 0,0:04:13.91,0:04:15.61,Default,,0,0,0,,[Đãi ngộ kiểu này]
Dialogue: 0,0:04:15.85,0:04:18.01,Default,,0,0,0,,[chỉ như đang gạt bỏ mình ra ngoài thôi.]
Dialogue: 0,0:04:18.18,0:04:21.12,Default,,0,0,0,,[Đáng ghét, không thể tha thứ được!]
Dialogue: 0,0:04:21.24,0:04:23.32,Default,,0,0,0,,[Bố Già khốn kiếp.]
Dialogue: 0,0:04:23.40,0:04:25.35,Default,,0,0,0,,Cậu đã khởi động làm nóng người xong chưa?
Dialogue: 0,0:04:35.51,0:04:37.80,Default,,0,0,0,,Bố Già, thầy đừng có làm quá đấy!
Dialogue: 0,0:04:38.54,0:04:41.54,Default,,0,0,0,,Thầy vừa khỏi bệnh thôi mà ăn mặc như vậy,\Nrốt cuộc thầy muốn làm gì?
Dialogue: 0,0:04:41.78,0:04:43.83,Default,,0,0,0,,Nếu lại ngã xuống thì phải làm sao?
Dialogue: 0,0:04:43.96,0:04:46.15,Default,,0,0,0,,Tôi đã nghỉ ngơi lâu lắm rồi,
Dialogue: 0,0:04:46.17,0:04:48.53,Default,,0,0,0,,sức khỏe sẽ không có vấn đề gì nữa.
Dialogue: 0,0:04:48.80,0:04:50.82,Default,,0,0,0,,Em thấy hình như thầy đã mập thêm chút rồi.
Dialogue: 0,0:04:51.01,0:04:53.47,Default,,0,0,0,,Sakuragi có muốn đấu với tôi không?
Dialogue: 0,0:04:53.71,0:04:55.61,Default,,0,0,0,,Đấu một trận? Em với thầy á?
Dialogue: 0,0:04:55.97,0:04:57.70,Default,,0,0,0,,So đấu ném rổ.
Dialogue: 0,0:04:58.71,0:04:59.76,Default,,0,0,0,,Bố Già à,
Dialogue: 0,0:05:00.07,0:05:02.12,Default,,0,0,0,,không ai chơi cùng với thầy
Dialogue: 0,0:05:02.15,0:05:04.98,Default,,0,0,0,,nhưng một thiên tài như em đây bận lắm,\Nem phải chuẩn bị cho giải đấu toàn quốc sắp đến nữa.
Dialogue: 0,0:05:05.11,0:05:09.14,Default,,0,0,0,,Em thật sự không chơi với thầy được.
Dialogue: 0,0:05:09.22,0:05:10.41,Default,,0,0,0,,Chơi.
Dialogue: 0,0:05:10.53,0:05:13.21,Default,,0,0,0,,Bố Già, tuổi tác của thầy cũng lớn rồi,\Nkhông phải con nít nữa,
Dialogue: 0,0:05:13.31,0:05:17.62,Default,,0,0,0,,sao lại cố ý giữ em lại\Nchỉ vì bản thân thầy muốn chơi chứ?
Dialogue: 0,0:05:19.29,0:05:22.63,Default,,0,0,0,,Tôi thấy thế này nhé, nếu cậu thắng được tôi,
Dialogue: 0,0:05:22.66,0:05:25.29,Default,,0,0,0,,tôi sẽ cho cậu\Nđi Shizuoka tập luyện cùng mọi người.
Dialogue: 0,0:05:27.04,0:05:29.61,Default,,0,0,0,,Được, chúng ta phân thắng bại nào.
Dialogue: 0,0:05:29.64,0:05:32.03,Default,,0,0,0,,Bố Già, thầy không được nói dối đâu đấy.
Dialogue: 0,0:05:32.14,0:05:35.84,Default,,0,0,0,,Dù sao thì một thiên tài như em đã\Nhy sinh thời gian để chơi ném rổ với thầy rồi,
Dialogue: 0,0:05:36.05,0:05:38.35,Default,,0,0,0,,nếu em thắng,\Nthầy không được oán trách em đấy.
Dialogue: 0,0:05:43.96,0:05:45.82,Default,,0,0,0,,Kéo búa bao!
Dialogue: 0,0:05:46.69,0:05:48.44,Default,,0,0,0,,Em tấn công sau.
Dialogue: 0,0:05:48.65,0:05:50.65,Default,,0,0,0,,Quy tắc đấu ném rổ
Dialogue: 0,0:05:51.06,0:05:54.25,Default,,0,0,0,,đó là đứng ở năm chỗ trên vạch ném phạt,\Nmỗi chỗ ném hai quả,
Dialogue: 0,0:05:54.37,0:05:57.83,Default,,0,0,0,,tổng cộng mười quả,\Nai vào nhiều hơn người đó thắng.
Dialogue: 0,0:05:58.04,0:05:59.27,Default,,0,0,0,,OK OK.
Dialogue: 0,0:06:01.91,0:06:03.55,Default,,0,0,0,,Tôi bắt đầu trước sao?
Dialogue: 0,0:06:04.03,0:06:05.82,Default,,0,0,0,,Ai trước ai sau cũng chẳng sao.
Dialogue: 0,0:06:05.95,0:06:06.87,Default,,0,0,0,,Vậy à?
Dialogue: 0,0:06:13.88,0:06:15.13,Default,,0,0,0,,[Thịt mỡ rung lắc qua lại.]
Dialogue: 0,0:06:22.05,0:06:23.59,Default,,0,0,0,,[Tròn quá đi.]
Dialogue: 0,0:06:25.83,0:06:28.19,Default,,0,0,0,,Tôi khởi động làm nóng người xong rồi,
Dialogue: 0,0:06:28.33,0:06:29.43,Default,,0,0,0,,tôi bắt đầu ném đây.
Dialogue: 0,0:06:29.55,0:06:31.48,Default,,0,0,0,,[Đã thở hổn hển rồi kìa.]
Dialogue: 0,0:06:46.34,0:06:47.19,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:06:49.84,0:06:51.34,Default,,0,0,0,,Sakuragi,
Dialogue: 0,0:06:51.74,0:06:55.20,Default,,0,0,0,,đừng đứng đó nữa, nhặt bóng về đi.
Dialogue: 0,0:06:59.47,0:07:00.81,Default,,0,0,0,,[Đây là trùng hợp thôi,]
Dialogue: 0,0:07:00.84,0:07:02.74,Default,,0,0,0,,[chắc chắn là trùng hợp\Nmới khiến thầy ấy ném vào.]
Dialogue: 0,0:07:21.49,0:07:23.80,Default,,0,0,0,,[Mười quả vào chín!]
Dialogue: 0,0:07:23.97,0:07:27.84,Default,,0,0,0,,Có một quả không vào, tiếc quá.
Dialogue: 0,0:07:31.47,0:07:35.38,Default,,0,0,0,,[Đúng rồi, hình như Ayako từng nói...]
Dialogue: 0,0:07:36.78,0:07:37.87,Default,,0,0,0,,Huấn luyện viên... thầy ấy...
Dialogue: 0,0:07:38.08,0:07:39.75,Default,,0,0,0,,Hồi thầy còn trẻ
Dialogue: 0,0:07:39.78,0:07:41.88,Default,,0,0,0,,là tuyển thủ bóng rổ quốc gia\Nđại diện cho Nhật Bản.
Dialogue: 0,0:07:42.32,0:07:43.98,Default,,0,0,0,,Chị đang nói ông Bố Già mập đó á?
Dialogue: 0,0:07:44.95,0:07:47.22,Default,,0,0,0,,[Hóa ra là thật sao?]
Dialogue: 0,0:07:48.72,0:07:49.88,Default,,0,0,0,,[Bố Già đáng ghét,]
Dialogue: 0,0:07:50.02,0:07:53.42,Default,,0,0,0,,[thì ra thầy tuy già,\Nnhưng kỹ thuật vẫn như thanh đao chưa cùn.]
Dialogue: 0,0:07:54.18,0:07:56.71,Default,,0,0,0,,Chỉ cần vào mười quả thì cậu sẽ thắng.
Dialogue: 0,0:07:57.42,0:07:59.66,Default,,0,0,0,,Nói đúng lắm, thú vị quá.
Dialogue: 0,0:07:59.78,0:08:02.68,Default,,0,0,0,,Thi đấu phải nên như vậy mới hoàn hảo chứ.
Dialogue: 0,0:08:19.98,0:08:20.91,Default,,0,0,0,,Đáng ghét!
Dialogue: 0,0:08:41.83,0:08:43.69,Default,,0,0,0,,Vào một quả chưa?
Dialogue: 0,0:08:43.84,0:08:46.17,Default,,0,0,0,,Không vào trái nào, đáng ghét.
Dialogue: 0,0:08:46.51,0:08:48.60,Default,,0,0,0,,Các cậu vào được rồi.
Dialogue: 0,0:08:49.91,0:08:51.24,Default,,0,0,0,,Đến giúp cậu đó.
Dialogue: 0,0:08:51.88,0:08:53.90,Default,,0,0,0,,Bọn mày...
Dialogue: 0,0:08:53.93,0:08:55.18,Default,,0,0,0,,Hanamichi,
Dialogue: 0,0:08:55.54,0:08:57.91,Default,,0,0,0,,tao đã quay lại\Ntư thế đẹp đẽ lúc mày ném rổ rồi.
Dialogue: 0,0:08:57.94,0:09:01.13,Default,,0,0,0,,Tao còn tưởng ít ra\Ncũng sẽ may mắn vào được một quả,
Dialogue: 0,0:09:01.15,0:09:03.48,Default,,0,0,0,,không ngờ mười quả mà không vào được quả nào.
Dialogue: 0,0:09:03.55,0:09:06.42,Default,,0,0,0,,Không hổ là Hanamichi,\Nkhông phụ sự mong đợi của mọi người.
Dialogue: 0,0:09:08.09,0:09:09.52,Default,,0,0,0,,Đáng ghét!
Dialogue: 0,0:09:09.54,0:09:10.95,Default,,0,0,0,,Bọn mày đến giúp tao cái gì hả?
Dialogue: 0,0:09:10.97,0:09:12.37,Default,,0,0,0,,Rõ ràng là đến để cười nhạo tao!
Dialogue: 0,0:09:12.54,0:09:13.84,Default,,0,0,0,,Nói chuyện chú ý chút cho tao.
Dialogue: 0,0:09:14.14,0:09:16.98,Default,,0,0,0,,Tao là nhiếp ảnh gia\Nđược huấn luyện viên công nhận đấy.
Dialogue: 0,0:09:17.64,0:09:19.42,Default,,0,0,0,,Công việc chỉnh sửa tư thế cứ giao cho tao.
Dialogue: 0,0:09:19.53,0:09:22.93,Default,,0,0,0,,Còn băng quay phim bữa, mày xem, bọn tao\Nđã chuẩn bị một đống băng quay phim rồi này.
Dialogue: 0,0:09:23.57,0:09:25.33,Default,,0,0,0,,Chúng được mua bằng tiền làm thêm đấy.
Dialogue: 0,0:09:25.47,0:09:27.39,Default,,0,0,0,,Máy quay phim là thuê.
Dialogue: 0,0:09:27.93,0:09:29.95,Default,,0,0,0,,Bọn mày vì tao
Dialogue: 0,0:09:29.97,0:09:31.42,Default,,0,0,0,,mà dồn hết số tiền cực khổ lắm mới kiếm được...
Dialogue: 0,0:09:31.63,0:09:32.66,Default,,0,0,0,,Chúng ta là bạn tốt mà.
Dialogue: 0,0:09:32.87,0:09:34.89,Default,,0,0,0,,Yohei.
Dialogue: 0,0:09:35.61,0:09:37.33,Default,,0,0,0,,Mọi người đều rất thích xem đó.
Dialogue: 0,0:09:38.84,0:09:40.41,Default,,0,0,0,,Đúng vậy, thay vì\Nxem mấy cuộn băng nhàm chán kia,
Dialogue: 0,0:09:40.51,0:09:43.14,Default,,0,0,0,,thì chi bằng xem tư thế ném rổ của Hanamichi\Ncòn thú vị hơn.
Dialogue: 0,0:09:43.14,0:09:45.37,Default,,0,0,0,,Đảm bảo cười đau bụng luôn.
Dialogue: 0,0:09:45.51,0:09:47.77,Default,,0,0,0,,Cho thuê 500 yên một cuộn, kiếm tiền được đấy.
Dialogue: 0,0:09:47.89,0:09:49.52,Default,,0,0,0,,Cuộc làm ăn này đảm bảo lời chứ không lỗ đâu.
Dialogue: 0,0:09:49.99,0:09:53.63,Default,,0,0,0,,Đáng ghét, đám bọn mày thì bạn bè gì nữa?
Dialogue: 0,0:09:54.64,0:09:55.77,Default,,0,0,0,,Sakuragi,
Dialogue: 0,0:09:57.07,0:09:59.18,Default,,0,0,0,,còn mười ngày nữa là đến giải đấu toàn quốc,
Dialogue: 0,0:09:59.29,0:10:02.48,Default,,0,0,0,,trước đó, cậu phải rèn luyện\Nkỹ thuật ném rổ của mình cho triệt để.
Dialogue: 0,0:10:02.56,0:10:04.04,Default,,0,0,0,,Triệt để.
Dialogue: 0,0:10:04.43,0:10:07.53,Default,,0,0,0,,Nên nơi mà cậu tập luyện là ở đây.
Dialogue: 0,0:10:07.61,0:10:09.80,Default,,0,0,0,,Muốn em tập luyện ở đây.
Dialogue: 0,0:10:09.91,0:10:12.52,Default,,0,0,0,,Bố Già, em tập luyện ở đây thì thật sự\Nsẽ có cách ném vào sao?
Dialogue: 0,0:10:12.68,0:10:14.17,Default,,0,0,0,,Với tư thế tệ hại của mày bây giờ...
Dialogue: 0,0:10:14.30,0:10:15.41,Default,,0,0,0,,Thì trước mắt đừng có mơ.
Dialogue: 0,0:10:16.25,0:10:17.18,Default,,0,0,0,,Câm mồm.
Dialogue: 0,0:10:18.78,0:10:20.05,Default,,0,0,0,,Mọi việc đều phải dựa vào bản thân cậu.
Dialogue: 0,0:10:32.48,0:10:34.57,Default,,0,0,0,,[Trường cấp ba Jousei - tỉnh Shizuoka]
Dialogue: 0,0:10:32.79,0:10:33.73,Default,,0,0,0,,Xin chào.
Dialogue: 0,0:10:35.84,0:10:37.64,Default,,0,0,0,,Akagi, cậu đến đây thật quý hóa quá.
Dialogue: 0,0:10:38.11,0:10:39.60,Default,,0,0,0,,Đàn anh Anzai giỏi ghê,
Dialogue: 0,0:10:39.91,0:10:42.94,Default,,0,0,0,,không ngờ lại đào tạo Shohoku trở thành\Nđội bóng đại diện cho tỉnh Kanagawa.
Dialogue: 0,0:10:43.12,0:10:45.21,Default,,0,0,0,,Cậu ấy là đội trưởng của chúng tôi,\NMikoshiba.
Dialogue: 0,0:10:45.32,0:10:46.65,Default,,0,0,0,,Đây là đội trưởng của Shohoku, Akagi.
Dialogue: 0,0:10:46.78,0:10:47.32,Default,,0,0,0,,Chào cậu.
Dialogue: 0,0:10:48.16,0:10:48.89,Default,,0,0,0,,Chào cậu.
Dialogue: 0,0:10:56.14,0:10:58.48,Default,,0,0,0,,Các cậu đấu ngang tài ngang sức với Kainan à?
Dialogue: 0,0:10:58.50,0:10:59.51,Default,,0,0,0,,Coi là vậy đi.
Dialogue: 0,0:10:59.65,0:11:00.67,Default,,0,0,0,,Vậy xem ra,
Dialogue: 0,0:11:00.70,0:11:03.38,Default,,0,0,0,,thực lực của Kainan năm nay\Nchẳng ra làm sao cả.
Dialogue: 0,0:11:04.39,0:11:05.58,Default,,0,0,0,,Đáng ghét.
Dialogue: 0,0:11:05.92,0:11:08.95,Default,,0,0,0,,Thì ra tên này chào đón khách như vậy sao?
Dialogue: 0,0:11:09.06,0:11:10.59,Default,,0,0,0,,Mitsui, đừng xúc động.
Dialogue: 0,0:11:10.69,0:11:13.85,Default,,0,0,0,,Nếu Hanamichi ở đây,\Nđừng nói là tập luyện chung,
Dialogue: 0,0:11:14.06,0:11:16.96,Default,,0,0,0,,e là vừa gặp mặt\Nđã có người bị phụt máu ở đây rồi.
Dialogue: 0,0:11:20.67,0:11:22.36,Default,,0,0,0,,Mọi người vừa gặp nhau,\Nnên chung sống hòa bình.
Dialogue: 0,0:11:23.94,0:11:29.58,Default,,0,0,0,,May mắn trong sự bất hạnh,\Nmay mà Sakuragi không ở đây.
Dialogue: 0,0:11:48.35,0:11:50.86,Default,,0,0,0,,Lừa đảo, thằng đó mà là tao á?
Dialogue: 0,0:11:50.97,0:11:52.73,Default,,0,0,0,,Nhìn sao cũng là mày hết đó.
Dialogue: 0,0:11:54.13,0:11:54.99,Default,,0,0,0,,Đáng ghét!
Dialogue: 0,0:11:55.13,0:11:59.13,Default,,0,0,0,,[Không đúng,\Nchắc chắn thằng đó không phải mình, lừa đảo.]
Dialogue: 0,0:12:08.57,0:12:10.57,Default,,0,0,0,,Cũng được, cũng tốt.
Dialogue: 0,0:12:12.38,0:12:14.99,Default,,0,0,0,,[Rốt cuộc cái thằng làm bẽ mặt này là ai?]
Dialogue: 0,0:12:20.17,0:12:21.73,Default,,0,0,0,,Tại sao ném không vào chứ?
Dialogue: 0,0:12:23.68,0:12:25.30,Default,,0,0,0,,Xem thêm mấy lần cũng thấy thú vị như nhau.
Dialogue: 0,0:12:25.42,0:12:28.23,Default,,0,0,0,,Takamiya,\Ntại cách quay phim của mày bị sai đó!
Dialogue: 0,0:12:28.32,0:12:30.95,Default,,0,0,0,,- Cái gì?\N- Tao không ném rổ như vậy.
Dialogue: 0,0:12:30.95,0:12:31.64,Default,,0,0,0,,Mày như vậy mà.
Dialogue: 0,0:12:31.91,0:12:32.76,Default,,0,0,0,,Tao không thừa nhận.
Dialogue: 0,0:12:32.93,0:12:35.09,Default,,0,0,0,,Chắc chắn là mày đã giở trò gì đó lúc quay rồi,
Dialogue: 0,0:12:35.21,0:12:37.99,Default,,0,0,0,,không thì sao thiên tài Sakuragi tao\Nlại ném rổ kiểu này chứ?
Dialogue: 0,0:12:37.99,0:12:39.30,Default,,0,0,0,,"Người kém cỏi"
Dialogue: 0,0:12:40.57,0:12:43.41,Default,,0,0,0,,"bước vào con đường cao thủ,"
Dialogue: 0,0:12:43.68,0:12:47.32,Default,,0,0,0,,"việc nhìn nhận sự kém cỏi của mình\Nlà bước đầu tiên."
Dialogue: 0,0:12:45.60,0:12:46.78,Default,,0,0,0,,[Người ngoài ngành không biết chút gì\Nmuốn trở thành cao thủ]
Dialogue: 0,0:12:45.60,0:12:46.78,Default,,0,0,0,,[Bước đầu tiên là biết rõ mình là ai]
Dialogue: 0,0:12:46.87,0:12:50.02,Default,,0,0,0,,[Người ngoài ngành không biết chút gì\Nmuốn trở thành cao thủ]
Dialogue: 0,0:12:46.87,0:12:50.02,Default,,0,0,0,,[Bước đầu tiên là biết rõ mình là ai]
Dialogue: 0,0:12:47.42,0:12:50.07,Default,,0,0,0,,"Người kém cỏi bước vào con đường cao thủ,"
Dialogue: 0,0:12:50.10,0:12:52.73,Default,,0,0,0,,"nhìn nhận sự kém cỏi của mình\Nlà bước đầu tiên."
Dialogue: 0,0:12:53.04,0:12:54.92,Default,,0,0,0,,Nghĩa là sao?
Dialogue: 0,0:12:55.04,0:12:57.34,Default,,0,0,0,,Với cái tên ngu ngốc trượt bảy môn\Nthì nó nghe không hiểu đâu.
Dialogue: 0,0:12:57.47,0:13:00.75,Default,,0,0,0,,Ý của thầy ấy là mày muốn chơi bóng giỏi thì\Nphải tự biết năng lực của bản thân đã.
Dialogue: 0,0:13:00.91,0:13:04.26,Default,,0,0,0,,Mày đang nói gì? Tao là thiên tài Sakuragi đó.
Dialogue: 0,0:13:04.37,0:13:05.47,Default,,0,0,0,,Thiên tài.
Dialogue: 0,0:13:05.55,0:13:07.49,Default,,0,0,0,,Thì ra là vậy, như vậy chính là thiên tài.
Dialogue: 0,0:13:07.53,0:13:09.81,Default,,0,0,0,,Tao đã nói đó không phải là tao.
Dialogue: 0,0:13:11.89,0:13:14.12,Default,,0,0,0,,Các cậu về nhà thi đấu đi.
Dialogue: 0,0:13:20.87,0:13:24.44,Default,,0,0,0,,Đây là thông tin cá nhân của vòng loại\Nmà Ayako đã ghi chép giúp tôi.
Dialogue: 0,0:13:24.61,0:13:25.56,Default,,0,0,0,,Theo số liệu phía trên,
Dialogue: 0,0:13:25.68,0:13:29.22,Default,,0,0,0,,sau bảy trận đấu,\NSakuragi ghi được tổng cộng 17 điểm,
Dialogue: 0,0:13:29.66,0:13:31.91,Default,,0,0,0,,trừ khi số điểm mấy quả ném phạt\Nthì chỉ còn 14 điểm.
Dialogue: 0,0:13:32.09,0:13:35.07,Default,,0,0,0,,Sáu điểm trong đó là lên rổ.
Dialogue: 0,0:13:35.72,0:13:37.80,Default,,0,0,0,,Ném dưới rổ được bốn điểm,
Dialogue: 0,0:13:38.06,0:13:39.59,Default,,0,0,0,,còn bốn điểm là úp rổ.
Dialogue: 0,0:13:42.74,0:13:45.76,Default,,0,0,0,,Sakuragi, cậu biết như vậy nghĩa là gì không?
Dialogue: 0,0:13:45.90,0:13:46.67,Default,,0,0,0,,Em là thiên tài.
Dialogue: 0,0:13:46.89,0:13:47.46,Default,,0,0,0,,Không.
Dialogue: 0,0:13:47.77,0:13:52.20,Default,,0,0,0,,Chỉ khi ở nơi rất gần với khung rổ,\Ncậu mới ném rổ được thôi.
Dialogue: 0,0:13:52.31,0:13:53.42,Default,,0,0,0,,Thầy nói gì?
Dialogue: 0,0:13:53.55,0:13:55.98,Default,,0,0,0,,Bố Già, thầy nói thêm lần nữa xem.
Dialogue: 0,0:13:55.98,0:13:58.57,Default,,0,0,0,,Hanamichi, lời thầy ấy nói là thật,\Nđây là chuyện không thể chối cãi.
Dialogue: 0,0:13:59.47,0:14:00.42,Default,,0,0,0,,Đừng ồn!
Dialogue: 0,0:14:00.42,0:14:02.12,Default,,0,0,0,,Sakuragi, cậu nghe rõ đây.
Dialogue: 0,0:14:02.20,0:14:04.09,Default,,0,0,0,,Đối thủ mà các cậu\Nsẽ gặp trong giải đấu toàn quốc
Dialogue: 0,0:14:04.12,0:14:06.53,Default,,0,0,0,,có lẽ đều có thông tin của chúng ta.
Dialogue: 0,0:14:07.34,0:14:08.77,Default,,0,0,0,,Nếu tôi là huấn luyện viên của họ,
Dialogue: 0,0:14:08.97,0:14:11.03,Default,,0,0,0,,chắc đều sẽ không để tâm đến cậu đâu.
Dialogue: 0,0:14:12.18,0:14:14.19,Default,,0,0,0,,Họ nói cái tên số 10\Nchỉ biết ghi điểm dưới rổ thôi
Dialogue: 0,0:14:14.21,0:14:15.41,Default,,0,0,0,,thì mặc kệ cậu ta.
Dialogue: 0,0:14:15.53,0:14:16.23,Default,,0,0,0,,Trái lại,
Dialogue: 0,0:14:16.36,0:14:18.80,Default,,0,0,0,,phải cử hai người kèm chặt số 11\Ncó khả năng ghi điểm tốt.
Dialogue: 0,0:14:19.22,0:14:20.46,Default,,0,0,0,,Chắc chắn chuyện sẽ như vậy đó.
Dialogue: 0,0:14:20.54,0:14:22.55,Default,,0,0,0,,Dám xem thường mình!
Dialogue: 0,0:14:22.78,0:14:23.57,Default,,0,0,0,,Nhưng...
Dialogue: 0,0:14:24.27,0:14:26.61,Default,,0,0,0,,- Chuyền bóng rồi.\N- Cậu ta ném không vào đâu, mặc kệ cậu ta.
Dialogue: 0,0:14:31.25,0:14:31.91,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:14:33.52,0:14:35.05,Default,,0,0,0,,Đối thủ có nằm mơ cũng không ngờ,
Dialogue: 0,0:14:35.07,0:14:37.92,Default,,0,0,0,,cậu có thể học được khả năng ném rổ\Nchỉ trong khoảng thời gian ngắn.
Dialogue: 0,0:14:38.26,0:14:39.63,Default,,0,0,0,,Cậu sẽ hoàn toàn không bị đề phòng nữa.
Dialogue: 0,0:14:39.86,0:14:41.16,Default,,0,0,0,,Sakuragi, cậu cảm thấy việc này thế nào?
Dialogue: 0,0:14:43.57,0:14:45.29,Default,,0,0,0,,Cậu có cảm thấy phấn khởi không?
Dialogue: 0,0:14:48.84,0:14:50.18,Default,,0,0,0,,Bố Già,
Dialogue: 0,0:14:50.20,0:14:51.74,Default,,0,0,0,,phải làm sao mới được?
Dialogue: 0,0:14:53.51,0:14:55.17,Default,,0,0,0,,Tập ném 20 nghìn quả bóng.
Dialogue: 0,0:14:55.71,0:14:57.87,Default,,0,0,0,,Cái gì, 20 nghìn?
Dialogue: 0,0:14:59.98,0:15:01.60,Default,,0,0,0,,20 nghìn quả là đủ rồi à?
Dialogue: 0,0:15:01.62,0:15:02.47,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:15:03.22,0:15:05.42,Default,,0,0,0,,Mày nghiêm túc à?
Dialogue: 0,0:15:05.51,0:15:07.74,Default,,0,0,0,,- Được rồi, bắt đầu đi.\N- Được.
Dialogue: 0,0:15:36.71,0:15:37.70,Default,,0,0,0,,Quả nhiên không được.
Dialogue: 0,0:15:38.08,0:15:40.14,Default,,0,0,0,,Ném mười quả mà không vào được quả nào.
Dialogue: 0,0:15:40.48,0:15:41.91,Default,,0,0,0,,[Kỳ lạ thật.]
Dialogue: 0,0:15:42.09,0:15:43.22,Default,,0,0,0,,[Tại sao lại ném không vào chứ?]
Dialogue: 0,0:15:43.35,0:15:45.19,Default,,0,0,0,,Ban nãy lúc xem lại đoạn phim,
Dialogue: 0,0:15:45.55,0:15:48.18,Default,,0,0,0,,cậu có chú ý đến chỗ nào kỳ lạ không?
Dialogue: 0,0:15:48.42,0:15:49.62,Default,,0,0,0,,Người đó đâu phải là em.
Dialogue: 0,0:15:49.65,0:15:50.41,Default,,0,0,0,,Là mày đó!
Dialogue: 0,0:15:51.99,0:15:53.48,Default,,0,0,0,,[Ở nơi quái lạ như vậy,]
Dialogue: 0,0:15:53.76,0:15:56.66,Default,,0,0,0,,[như vậy khó tìm được vị trí tốt để ném rổ lắm.]
Dialogue: 0,0:15:56.96,0:15:58.05,Default,,0,0,0,,[Đáng ghét quá.]
Dialogue: 0,0:16:03.50,0:16:06.25,Default,,0,0,0,,Cậu là người mới học,\Ntất nhiên cảm thấy tư thế của mình quái lạ.
Dialogue: 0,0:16:07.27,0:16:09.67,Default,,0,0,0,,Thật ra tôi cảm thấy may mắn\Nvì cậu không có thói quen xấu nào.
Dialogue: 0,0:16:09.94,0:16:12.70,Default,,0,0,0,,Chỉ cần biết tư thế chính xác là được.
Dialogue: 0,0:16:15.01,0:16:16.57,Default,,0,0,0,,[Được, chắc chắn mình sẽ thành công!]
Dialogue: 0,0:16:24.32,0:16:25.72,Default,,0,0,0,,Cậu ném khá chuẩn khi ở dưới rổ.
Dialogue: 0,0:16:25.92,0:16:26.72,Default,,0,0,0,,Tất nhiên rồi,
Dialogue: 0,0:16:26.85,0:16:28.93,Default,,0,0,0,,em là thiên tài mà,\Nvả lại từng được huấn luyện đặc biệt.
Dialogue: 0,0:16:31.81,0:16:33.80,Default,,0,0,0,,Về cơ bản thì việc đó\Ncũng tương tự với việc ném rổ.
Dialogue: 0,0:16:37.45,0:16:39.25,Default,,0,0,0,,Tiếp theo, bắt đầu từ đây.
Dialogue: 0,0:16:49.44,0:16:50.77,Default,,0,0,0,,Không được.
Dialogue: 0,0:16:51.01,0:16:52.03,Default,,0,0,0,,Mạnh quá rồi.
Dialogue: 0,0:16:53.08,0:16:54.88,Default,,0,0,0,,Nào, hít sâu vào,
Dialogue: 0,0:17:02.59,0:17:04.35,Default,,0,0,0,,phải thả lỏng nửa người trên.
Dialogue: 0,0:17:05.38,0:17:07.66,Default,,0,0,0,,Thả lỏng.
Dialogue: 0,0:17:07.73,0:17:09.32,Default,,0,0,0,,Ném rổ không phải dựa vào sức mạnh.
Dialogue: 0,0:17:09.40,0:17:11.96,Default,,0,0,0,,Rồi, thả lỏng.
Dialogue: 0,0:17:12.14,0:17:13.00,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:17:14.58,0:17:16.36,Default,,0,0,0,,- Chào buổi trưa.\N- Haruko.
Dialogue: 0,0:17:16.51,0:17:18.31,Default,,0,0,0,,Cậu lại ra sức quá rồi.
Dialogue: 0,0:17:18.95,0:17:22.40,Default,,0,0,0,,- Thả lỏng.\N- Thả lỏng, thả lỏng.
Dialogue: 0,0:17:22.50,0:17:23.51,Default,,0,0,0,,Tôi nghe anh nói
Dialogue: 0,0:17:23.53,0:17:26.32,Default,,0,0,0,,chỉ có Sakuragi được giữ lại\Nđể huấn luyện đặc biệt.
Dialogue: 0,0:17:26.44,0:17:27.45,Default,,0,0,0,,Sao, tình hình thế nào rồi?
Dialogue: 0,0:17:27.54,0:17:28.79,Default,,0,0,0,,Còn lâu lắm.
Dialogue: 0,0:17:28.82,0:17:30.24,Default,,0,0,0,,Mình thấy cậu ấy còn phải luyện dài dài.
Dialogue: 0,0:17:30.61,0:17:32.34,Default,,0,0,0,,[Sakuragi cố lên.]
Dialogue: 0,0:17:32.53,0:17:33.82,Default,,0,0,0,,[Chìa khóa xưng bá toàn quốc]
Dialogue: 0,0:17:34.06,0:17:35.83,Default,,0,0,0,,[nằm ở trong tay cậu đấy.]
Dialogue: 0,0:17:36.68,0:17:39.82,Default,,0,0,0,,Vì cậu phải dựa vào\Nsức mạnh nửa người trên để ném bóng vào,
Dialogue: 0,0:17:39.84,0:17:41.37,Default,,0,0,0,,nên mới ra sức mạnh như vậy.
Dialogue: 0,0:17:41.39,0:17:43.58,Default,,0,0,0,,Thật ra mấu chốt ở nửa người dưới của cậu.
Dialogue: 0,0:17:43.76,0:17:44.85,Default,,0,0,0,,Nửa người dưới?
Dialogue: 0,0:17:45.16,0:17:49.86,Default,,0,0,0,,Đúng vậy, dùng đầu gối để đẩy cơ thể lên,\Nđẩy từ dưới lên trên.
Dialogue: 0,0:17:50.16,0:17:55.57,Default,,0,0,0,,Dùng đầu gối đẩy từ dưới lên trên.
Dialogue: 0,0:17:57.57,0:17:58.60,Default,,0,0,0,,Thả lỏng.
Dialogue: 0,0:17:59.94,0:18:00.71,Default,,0,0,0,,[Thả lỏng.]
Dialogue: 0,0:18:16.26,0:18:19.13,Default,,0,0,0,,Chẳng phải đã tốt hơn một chút rồi sao?
Dialogue: 0,0:18:19.24,0:18:21.08,Default,,0,0,0,,Ít ra đã chạm trúng vành rổ rồi.
Dialogue: 0,0:18:21.08,0:18:22.75,Default,,0,0,0,,Sự trùng hợp này hay ghê.
Dialogue: 0,0:18:22.85,0:18:24.27,Default,,0,0,0,,Đáng tiếc quá Hanamichi.
Dialogue: 0,0:18:24.94,0:18:27.09,Default,,0,0,0,,Em không ra sức gì cả,
Dialogue: 0,0:18:27.12,0:18:28.43,Default,,0,0,0,,nhưng lại bay xa hơn ban nãy.
Dialogue: 0,0:18:28.55,0:18:30.51,Default,,0,0,0,,Tôi đã nói mà, đầu gối rất quan trọng.
Dialogue: 0,0:18:33.05,0:18:34.34,Default,,0,0,0,,[Thì ra là vậy.]
Dialogue: 0,0:18:34.36,0:18:35.76,Default,,0,0,0,,[Mình đã nắm được điểm mấu chốt rồi.]
Dialogue: 0,0:18:36.02,0:18:37.56,Default,,0,0,0,,Được, em ném thêm lần nữa.
Dialogue: 0,0:18:37.68,0:18:39.36,Default,,0,0,0,,Không được, dừng một lát.
Dialogue: 0,0:18:39.47,0:18:41.31,Default,,0,0,0,,Làm gì vậy Bố Già?
Dialogue: 0,0:18:41.43,0:18:42.92,Default,,0,0,0,,Giữ nguyên tư thế này không được nhúc nhích.
Dialogue: 0,0:18:44.17,0:18:46.04,Default,,0,0,0,,Mọi người cũng phải quay lại đấy.
Dialogue: 0,0:18:48.38,0:18:49.47,Default,,0,0,0,,Làm gì vậy?
Dialogue: 0,0:18:49.61,0:18:53.56,Default,,0,0,0,,Dù cậu biết phải dùng đầu gối\Nđể sức mạnh được truyền từ dưới lên trên,
Dialogue: 0,0:18:53.78,0:18:56.71,Default,,0,0,0,,nhưng khi đến đây thì do sai tư thế\Nnên sức mạnh không được chuyền vào quả bóng.
Dialogue: 0,0:18:58.85,0:19:01.58,Default,,0,0,0,,Phải đưa vào gần hơn như thế này, rồi, thử xem.
Dialogue: 0,0:19:05.08,0:19:08.65,Default,,0,0,0,,- Hanamichi, là vậy đó.\N- Tư thế ném rổ xuất hiện rồi.
Dialogue: 0,0:19:09.54,0:19:12.61,Default,,0,0,0,,Vậy sao? Em cảm thấy có hơi khó chịu.
Dialogue: 0,0:19:12.71,0:19:14.64,Default,,0,0,0,,Khó chịu thì tập đến khi dễ chịu.
Dialogue: 0,0:19:17.21,0:19:19.81,Default,,0,0,0,,Tay của cậu ấy mà đưa ra ngoài\Nthì mọi người nhắc cậu ấy nhé.
Dialogue: 0,0:19:19.93,0:19:20.67,Default,,0,0,0,,Em biết rồi ạ.
Dialogue: 0,0:19:20.75,0:19:21.65,Default,,0,0,0,,Bọn em không khách sáo đâu.
Dialogue: 0,0:19:21.85,0:19:23.49,Default,,0,0,0,,Sakuragi, cậu đẹp trai quá.
Dialogue: 0,0:19:23.49,0:19:24.81,Default,,0,0,0,,Trông giống một tay bóng kỳ cựu lắm.
Dialogue: 0,0:19:25.38,0:19:26.35,Default,,0,0,0,,Vậy sao?
Dialogue: 0,0:19:29.42,0:19:31.67,Default,,0,0,0,,Cuối cùng là dùng cổ tay
Dialogue: 0,0:19:31.70,0:19:34.42,Default,,0,0,0,,ném bóng cao lên khung rổ.
Dialogue: 0,0:19:51.81,0:19:52.51,Default,,0,0,0,,Vào rồi!
Dialogue: 0,0:19:52.71,0:19:54.51,Default,,0,0,0,,Sakuragi, ném tốt lắm.
Dialogue: 0,0:19:54.71,0:19:56.52,Default,,0,0,0,,Khác hẳn với trước đây luôn.
Dialogue: 0,0:19:56.63,0:19:58.06,Default,,0,0,0,,Cứ như đổi sang một người khác vậy.
Dialogue: 0,0:19:58.23,0:19:59.38,Default,,0,0,0,,Làm tốt lắm, Hanamichi.
Dialogue: 0,0:19:59.41,0:20:01.49,Default,,0,0,0,,Mau đưa bóng cho tao,\NNoma mau chuyền bóng cho tao.
Dialogue: 0,0:20:01.52,0:20:03.11,Default,,0,0,0,,Tao phải nhân lúc này để tập luyện cho nhiều.
Dialogue: 0,0:20:03.13,0:20:04.12,Default,,0,0,0,,Mau cho tao, mau cho tao.
Dialogue: 0,0:20:04.27,0:20:05.62,Default,,0,0,0,,Đừng vội như vậy.
Dialogue: 0,0:20:06.28,0:20:08.05,Default,,0,0,0,,Ban nãy chỉ là khởi động làm nóng người thôi,
Dialogue: 0,0:20:08.17,0:20:09.51,Default,,0,0,0,,tiếp theo mới là làm thật đây.
Dialogue: 0,0:20:09.76,0:20:11.47,Default,,0,0,0,,Phải ném 20 nghin quả đấy.
Dialogue: 0,0:20:14.13,0:20:16.89,Default,,0,0,0,,Chúng ta đến đây không phải để chơi,\Nmọi người tươi lên nào.
Dialogue: 0,0:20:17.13,0:20:19.96,Default,,0,0,0,,Các cậu đừng tập mệt quá rồi gục luôn đấy nhé.
Dialogue: 0,0:20:20.54,0:20:21.57,Default,,0,0,0,,Bản thân cậu mới phải coi chừng đấy.
Dialogue: 0,0:20:22.01,0:20:23.98,Default,,0,0,0,,Tôi rất mong trận đấu tập với các cậu.
Dialogue: 0,0:20:25.01,0:20:26.72,Default,,0,0,0,,[Buổi tập chung vừa bắt đầu.]
Dialogue: 0,0:20:26.84,0:20:28.75,Default,,0,0,0,,[Đội Shohku và đội đại diện\Ncho tỉnh Shizuoka - đội cấp ba Jousei]
Dialogue: 0,0:20:28.83,0:20:30.33,Default,,0,0,0,,[đã tóe ra những tia lửa quyết liệt.]
Dialogue: 0,0:20:31.53,0:20:32.36,Default,,0,0,0,,[Bên kia,]
Dialogue: 0,0:20:32.50,0:20:35.43,Default,,0,0,0,,[Hanamichi đã bắt đầu cuộc huấn luyện\Nđặc biệt đó là ném 20 nghìn quả bóng.]
Dialogue: 0,0:20:35.46,0:20:37.14,Default,,0,0,0,,[Hoàn thành buổi học ngày đầu tiên,]
Dialogue: 0,0:20:37.26,0:20:39.96,Default,,0,0,0,,[cậu ấy ngủ giống hệt như một con heo chết vậy.]
Dialogue: 0,0:20:48.43,0:20:55.75,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:20:56.23,0:21:03.29,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:21:13.72,0:21:20.38,Default,,0,0,0,,♫ Từng một lòng muốn thực hiện\Nnhững ước mơ xưa cũ ♫
Dialogue: 0,0:21:21.04,0:21:25.60,Default,,0,0,0,,♫ Cho đến hôm nay vẫn chói mắt như thế ♫
Dialogue: 0,0:21:28.28,0:21:35.83,Default,,0,0,0,,♫ Cho dù tâm tình đầy sự bất an ♫
Dialogue: 0,0:21:35.95,0:21:39.94,Default,,0,0,0,,♫ Tôi vẫn vững tin\Nvới lựa chọn của chính mình ♫
Dialogue: 0,0:21:42.17,0:21:48.91,Default,,0,0,0,,♫ Thích vẻ mặt thuần khiết\Nkhông điểm trang gì của cậu ♫
Dialogue: 0,0:21:49.05,0:21:54.95,Default,,0,0,0,,♫ Nếu một ngày nó thay đổi,\Nsẽ làm người ta thấy đau lòng lắm ♫
Dialogue: 0,0:21:55.90,0:22:01.52,Default,,0,0,0,,♫ Thời niên thiếu đã từng luôn lấp lánh ♫
Dialogue: 0,0:22:01.61,0:22:04.05,Default,,0,0,0,,♫ Đôi mắt của cậu, hỡi bạn tôi ♫
Dialogue: 0,0:22:04.15,0:22:10.55,Default,,0,0,0,,♫ Chỉ cần nghĩ đến cậu\Nthì lòng này sẽ mạnh mẽ hơn ♫
Dialogue: 0,0:22:10.75,0:22:17.92,Default,,0,0,0,,♫ Tôi sẽ luôn nhìn cậu\Nnên xin hãy cứ dũng cảm tiến về phía trước ♫
Dialogue: 0,0:22:21.35,0:22:22.42,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:25.29,0:22:26.79,Default,,0,0,0,,Không hổ là Jousei,
Dialogue: 0,0:22:27.19,0:22:29.35,Default,,0,0,0,,quả nhiên thực lực của đội top tám toàn quốc\Nkhông xoàng chút nào.
Dialogue: 0,0:22:29.45,0:22:31.53,Default,,0,0,0,,Thiên tài Sakuragi\Nđang được huấn luyện đặc biệt.
Dialogue: 0,0:22:31.61,0:22:33.86,Default,,0,0,0,,Dùng cách phòng ngự kèm người\Nkèm chết Rukawa.
Dialogue: 0,0:22:34.06,0:22:35.46,Default,,0,0,0,,Nhìn thấu được\Ncậu ấy là con át chủ bài của chúng ta rồi.
Dialogue: 0,0:22:35.46,0:22:37.85,Default,,0,0,0,,Thiên tài Sakuragi\Nđang được huấn luyện đặc biệt.
Dialogue: 0,0:22:37.85,0:22:39.36,Default,,0,0,0,,Nhưng dù vậy vẫn phải ghi điểm.
Dialogue: 0,0:22:39.54,0:22:40.36,Default,,0,0,0,,Đây chính là tác dụng của con át chủ bài.
Dialogue: 0,0:22:40.44,0:22:42.44,Default,,0,0,0,,Thiên tài Sakuragi\Nđang được huấn luyện đặc biệt.
Dialogue: 0,0:22:42.44,0:22:44.03,Default,,0,0,0,,Câm mồm cho tôi, đồ ngu.
Dialogue: 0,0:22:45.26,0:22:46.35,Default,,0,0,0,,"Cao thủ bóng rổ."
Dialogue: 0,0:22:46.47,0:22:49.21,Default,,0,0,0,,"Chiến đấu kịch liệt ở Shizuoka!\NShohoku đấu với Jousei."
Dialogue: 0,0:22:49.30,0:22:50.93,Default,,0,0,0,,Chắc chắn phải xem đó.
