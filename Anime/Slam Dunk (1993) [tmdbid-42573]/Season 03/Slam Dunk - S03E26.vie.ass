Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.81,0:00:20.67,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.75,0:00:24.00,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.80,0:00:30.32,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.55,0:00:36.59,Default,,0,0,0,,♫  Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.51,0:00:44.35,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.15,0:00:51.15,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.34,0:00:57.15,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.24,0:01:03.22,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.31,0:01:10.05,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.99,0:01:19.94,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:20.06,0:01:26.09,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.23,0:01:32.00,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:32.10,0:01:40.50,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:54.30,0:01:56.22,Default,,0,0,0,,Fukuda, tôi đã thắng anh rồi!
Dialogue: 0,0:01:57.63,0:01:58.91,Default,,0,0,0,,Đúng, chính là thế!
Dialogue: 0,0:01:59.01,0:02:00.35,Default,,0,0,0,,Tôi là vua dưới khung rổ!
Dialogue: 0,0:02:01.48,0:02:03.24,Default,,0,0,0,,Tôi tự giành!
Dialogue: 0,0:02:05.44,0:02:07.35,Default,,0,0,0,,Chặn tốt lắm, Sendoh!
Dialogue: 0,0:02:07.48,0:02:08.31,Default,,0,0,0,,[Trong trận đấu]
Dialogue: 0,0:02:08.43,0:02:11.89,Default,,0,0,0,,[giành quyền thi đấu tiếp theo ở\Ngiải toàn quốc của Shohoku và Ryonan.]
Dialogue: 0,0:02:12.25,0:02:18.24,Default,,0,0,0,,[Linh hồn của đội Shohoku - Akagi\Nđã phát huy hết năng lực đỉnh cao của mình,]
Dialogue: 0,0:02:18.36,0:02:21.29,Default,,0,0,0,,[từng bước một kéo xa khoảng cách\Nđiểm số của Shohoku và Ryonan.]
Dialogue: 0,0:02:22.16,0:02:24.49,Default,,0,0,0,,Bây giờ không ai còn ai\Ntrong Shohoku hỗ trợ cho Akagi,
Dialogue: 0,0:02:24.67,0:02:27.93,Default,,0,0,0,,đánh bại Akagi\Nlà có thể đánh thắng cả đội bóng.
Dialogue: 0,0:02:31.61,0:02:32.87,Default,,0,0,0,,[Huấn luyện viên Anzai.]
Dialogue: 0,0:02:33.81,0:02:35.90,Default,,0,0,0,,[Các cậu là mạnh nhất.]
Dialogue: 0,0:02:36.18,0:02:39.61,Default,,0,0,0,,[Giờ thì em cũng biết ý nghĩa thật sự\Nvề câu nói đó của huấn luyện viên rồi.]
Dialogue: 0,0:02:41.75,0:02:43.08,Default,,0,0,0,,[Chúng ta sẽ thắng thôi.]
Dialogue: 0,0:02:45.62,0:02:46.38,Default,,0,0,0,,[Nhưng mà,]
Dialogue: 0,0:02:46.55,0:02:49.14,Default,,0,0,0,,[Shohoku có rất nhiều nhân tố bất an tiềm ẩn,]
Dialogue: 0,0:02:49.26,0:02:52.19,Default,,0,0,0,,[chỉ là bây giờ chưa thể hiện ra mà thôi.]
Dialogue: 0,0:02:52.36,0:02:55.13,Default,,0,0,0,,[Cơ hội thắng lợi lại trở về\Nvới chúng ta một lần nữa.]
Dialogue: 0,0:02:55.98,0:02:59.04,Default,,0,0,0,,[Dự đoán này của huấn luyện viên\NTaoka trường Ryonan]
Dialogue: 0,0:02:59.35,0:03:02.48,Default,,0,0,0,,[sẽ thành hiện thực hay không?]
Dialogue: 0,0:03:03.56,0:03:11.92,Default,,0,0,0,,[Sống lại! Đấu tướng - Uozumi Jun!]
Dialogue: 0,0:03:05.44,0:03:09.70,Default,,0,0,0,,[Sống lại! Đấu tướng - Uozumi Jun!]
Dialogue: 0,0:03:20.33,0:03:23.93,Default,,0,0,0,,Vào nữa rồi! Tuyệt vời! Hoan hô!
Dialogue: 0,0:03:25.71,0:03:27.48,Default,,0,0,0,,Tốt lắm, còn sáu phút nữa thôi!
Dialogue: 0,0:03:28.09,0:03:29.82,Default,,0,0,0,,Không được lơ là, không được\Ncho họ bất kỳ cơ hội nào!
Dialogue: 0,0:03:30.07,0:03:31.27,Default,,0,0,0,,Được rồi, Tinh Tinh Bự!
Dialogue: 0,0:03:31.81,0:03:34.42,Default,,0,0,0,,Được! Nhất định phải thắng!
Dialogue: 0,0:03:38.21,0:03:39.95,Default,,0,0,0,,Shohoku cố lên!
Dialogue: 0,0:03:40.07,0:03:42.07,Default,,0,0,0,,Hanamichi, giải đấu toàn quốc\Nđang đợi mày đấy!
Dialogue: 0,0:03:42.24,0:03:45.94,Default,,0,0,0,,Được, thiên tài tao đây sẽ bước lên\Nsân khấu của toàn quốc!
Dialogue: 0,0:03:47.34,0:03:49.60,Default,,0,0,0,,Đồ ngốc, đừng mất tập trung, có nghe không?
Dialogue: 0,0:04:05.26,0:04:06.22,Default,,0,0,0,,Uozumi.
Dialogue: 0,0:04:06.36,0:04:06.88,Default,,0,0,0,,Vâng.
Dialogue: 0,0:04:07.36,0:04:11.39,Default,,0,0,0,,Xin lỗi, vừa nãy tôi đã luôn\Nkêu cậu hãy kiên nhẫn.
Dialogue: 0,0:04:14.19,0:04:15.99,Default,,0,0,0,,Bây giờ tôi quyết định cho cậu ra sân.
Dialogue: 0,0:04:18.73,0:04:20.70,Default,,0,0,0,,Đội trắng đổi người.
Dialogue: 0,0:04:24.81,0:04:26.54,Default,,0,0,0,,Nhờ hết vào cậu đấy, Uozumi.
Dialogue: 0,0:04:26.85,0:04:27.58,Default,,0,0,0,,Vâng!
Dialogue: 0,0:04:29.29,0:04:30.35,Default,,0,0,0,,Là Uozumi!
Dialogue: 0,0:04:34.90,0:04:37.53,Default,,0,0,0,,Sau bốn lần phạm lỗi,\NUozumi lại quay lại sân bóng!
Dialogue: 0,0:04:39.40,0:04:40.89,Default,,0,0,0,,[Cũng hết cách.]
Dialogue: 0,0:04:41.37,0:04:44.67,Default,,0,0,0,,[Ryonan không thể nào để Uozumi\Nngồi nghỉ mãi trên ghế dự bị được.]
Dialogue: 0,0:04:47.11,0:04:48.91,Default,,0,0,0,,Đổi lại là tôi, tôi cũng làm như thế.
Dialogue: 0,0:04:54.72,0:04:59.02,Default,,0,0,0,,Taoka Moichi này tuyệt đối\Nkhông phải người kiên nhẫn.
Dialogue: 0,0:05:02.73,0:05:03.63,Default,,0,0,0,,Uozumi!
Dialogue: 0,0:05:04.60,0:05:05.82,Default,,0,0,0,,Thủ Lĩnh Người Vượn.
Dialogue: 0,0:05:13.14,0:05:14.04,Default,,0,0,0,,Sendoh.
Dialogue: 0,0:05:15.17,0:05:16.23,Default,,0,0,0,,Sendoh.
Dialogue: 0,0:05:19.21,0:05:22.20,Default,,0,0,0,,Nếu trở lại sân bóng muộn thêm một phút,
Dialogue: 0,0:05:22.41,0:05:24.88,Default,,0,0,0,,thì Shohoku chắc chắn nắm chắc phần thắng.
Dialogue: 0,0:05:26.58,0:05:27.81,Default,,0,0,0,,Sau khi bước vào nửa trận sau,
Dialogue: 0,0:05:28.05,0:05:31.92,Default,,0,0,0,,Sendoh luôn là người\Ngiữ vững tinh thần của cả đội.
Dialogue: 0,0:05:33.15,0:05:33.71,Default,,0,0,0,,Thật ra,
Dialogue: 0,0:05:33.71,0:05:35.57,Default,,0,0,0,,chỉ đối phó với một Rukawa thôi đã đủ mệt rồi,
Dialogue: 0,0:05:36.15,0:05:37.83,Default,,0,0,0,,thêm trọng trách gánh vác cả đội\Nđè lên vai Sendoh.
Dialogue: 0,0:05:39.22,0:05:42.39,Default,,0,0,0,,Suýt chút nữa thôi là Sendoh\Nbị áp lực đấy đánh gục.
Dialogue: 0,0:05:49.07,0:05:52.54,Default,,0,0,0,,[Lực tấn công của Shohoku quá choáng ngợp!]
Dialogue: 0,0:05:53.06,0:05:54.55,Default,,0,0,0,,[Một mình thiên tài Sendoh\Nmuốn lật ngược tình thế]
Dialogue: 0,0:05:54.67,0:05:55.94,Default,,0,0,0,,[đã khiến anh ấy hao tốn quá nhiều sức lực.]
Dialogue: 0,0:05:59.06,0:06:00.49,Default,,0,0,0,,Thiên tài thì thiên tài,
Dialogue: 0,0:06:00.76,0:06:02.58,Default,,0,0,0,,dù sao cậu ta cũng chỉ là\Nmột vận động viên bóng rổ lớp 11 mà thôi.
Dialogue: 0,0:06:04.05,0:06:06.42,Default,,0,0,0,,Uozumi, vị trí dưới rổ nhờ vào anh đấy.
Dialogue: 0,0:06:06.69,0:06:07.24,Default,,0,0,0,,Được!
Dialogue: 0,0:06:08.78,0:06:09.95,Default,,0,0,0,,Cứ giao cho tôi!
Dialogue: 0,0:06:13.34,0:06:22.22,Default,,0,0,0,,Uozumi! Uozumi! Cố lên!
Dialogue: 0,0:06:22.60,0:06:24.91,Default,,0,0,0,,Uozumi cố lên!
Dialogue: 0,0:06:25.37,0:06:28.42,Default,,0,0,0,,Cố lên Uozumi!
Dialogue: 0,0:06:28.52,0:06:32.52,Default,,0,0,0,,Ryonan của chúng ta tuyệt đối\Nkhông thể thua tại đây được!
Dialogue: 0,0:06:33.66,0:06:35.94,Default,,0,0,0,,Cố lên Uozumi!
Dialogue: 0,0:06:36.12,0:06:39.25,Default,,0,0,0,,Uozumi ra sân sẽ khiến cho\Ntình thế trên sân khấu thay đổi.
Dialogue: 0,0:06:39.48,0:06:41.62,Default,,0,0,0,,Được rồi! Ryonan cố lên!
Dialogue: 0,0:06:47.18,0:06:49.58,Default,,0,0,0,,Cuối cùng cậu cũng trở lại, Uozumi.
Dialogue: 0,0:06:50.54,0:06:54.44,Default,,0,0,0,,[Huấn luyện viên nói cơ hội sẽ\Ntrở lại với chúng tôi một lần nữa,]
Dialogue: 0,0:06:54.91,0:06:56.68,Default,,0,0,0,,[chúng tôi có thể chuyển bại thành thắng!]
Dialogue: 0,0:06:57.01,0:06:57.91,Default,,0,0,0,,[Tôi nhất quyết phải thắng!]
Dialogue: 0,0:07:04.42,0:07:04.98,Default,,0,0,0,,Gì?
Dialogue: 0,0:07:09.96,0:07:11.85,Default,,0,0,0,,Giành hay lắm, Ryota!
Dialogue: 0,0:07:11.98,0:07:12.74,Default,,0,0,0,,Tốt!
Dialogue: 0,0:07:13.44,0:07:15.59,Default,,0,0,0,,Không ổn, tình thế vẫn chưa thay đổi.
Dialogue: 0,0:07:15.70,0:07:16.95,Default,,0,0,0,,Mau tấn công!
Dialogue: 0,0:07:24.78,0:07:25.60,Default,,0,0,0,,Uekusa!
Dialogue: 0,0:07:25.89,0:07:29.17,Default,,0,0,0,,Mau phòng thủ! Mau quay về phòng thủ!
Dialogue: 0,0:07:30.93,0:07:32.95,Default,,0,0,0,,Nhanh quá! Họ chạy nhanh quá!
Dialogue: 0,0:07:33.12,0:07:36.06,Default,,0,0,0,,Sakuragi! Rukawa!
Dialogue: 0,0:07:36.28,0:07:38.04,Default,,0,0,0,,Còn Ryochin nữa!
Dialogue: 0,0:07:39.45,0:07:43.51,Default,,0,0,0,,Không ai có thể đuổi kịp\Nba quả tên lửa của Shohoku đâu!
Dialogue: 0,0:07:43.82,0:07:44.98,Default,,0,0,0,,Sendoh!
Dialogue: 0,0:07:57.93,0:07:58.56,Default,,0,0,0,,Ryota!
Dialogue: 0,0:07:59.55,0:08:01.01,Default,,0,0,0,,[Mình nhất định phải giữ được quả này!]
Dialogue: 0,0:08:12.39,0:08:14.05,Default,,0,0,0,,Gì? Cậu ta tự ném sao?
Dialogue: 0,0:08:18.97,0:08:20.30,Default,,0,0,0,,Vào rồi!
Dialogue: 0,0:08:20.42,0:08:21.65,Default,,0,0,0,,Còn nhanh hơn cả tia chớp!
Dialogue: 0,0:08:21.65,0:08:22.54,Default,,0,0,0,,Không ai cản nổi!
Dialogue: 0,0:08:22.84,0:08:25.47,Default,,0,0,0,,Tia chớp Miyagi Ryota!
Dialogue: 0,0:08:25.74,0:08:32.20,Default,,0,0,0,,Cố lên!
Dialogue: 0,0:08:42.31,0:08:45.34,Default,,0,0,0,,Cậu tưởng tôi sẽ bị chặn dễ dàng vậy sao?
Dialogue: 0,0:08:49.59,0:08:50.45,Default,,0,0,0,,15 điểm.
Dialogue: 0,0:08:50.62,0:08:52.21,Default,,0,0,0,,Cách nhau 15 điểm! Tốt quá!
Dialogue: 0,0:08:53.56,0:08:55.04,Default,,0,0,0,,Làm tốt lắm! Ryota!
Dialogue: 0,0:08:55.16,0:08:56.32,Default,,0,0,0,,Không ngờ đấy, không có sự giúp đỡ\Ncủa thiên tài này
Dialogue: 0,0:08:56.46,0:08:58.33,Default,,0,0,0,,mà anh vẫn tự mình ghi điểm được, làm tốt quá!
Dialogue: 0,0:08:58.46,0:09:01.35,Default,,0,0,0,,Đau quá! Đừng đánh nữa, Hanamichi!\NĐừng đánh nữa!
Dialogue: 0,0:09:03.72,0:09:05.45,Default,,0,0,0,,Đổi người! Lại đổi người rồi!
Dialogue: 0,0:09:08.29,0:09:09.15,Default,,0,0,0,,Đàn anh Uekusa!
Dialogue: 0,0:09:10.33,0:09:15.11,Default,,0,0,0,,Phòng thủ! Phòng thủ!
Dialogue: 0,0:09:15.23,0:09:15.82,Default,,0,0,0,,Đại ca.
Dialogue: 0,0:09:20.27,0:09:21.93,Default,,0,0,0,,Chúng ta có thể vào được giải đấu toàn quốc!
Dialogue: 0,0:09:40.51,0:09:42.24,Default,,0,0,0,,Thời gian còn lại chưa đến sáu phút.
Dialogue: 0,0:09:42.44,0:09:45.60,Default,,0,0,0,,Con số 60 này sẽ gây cú sốc lớn cho Ryonan,
Dialogue: 0,0:09:45.77,0:09:47.15,Default,,0,0,0,,lần này họ sẽ gục ngã mất.
Dialogue: 0,0:09:49.19,0:09:51.97,Default,,0,0,0,,Đặc biệt là quả vừa nãy,\Nném vào ngay trước Sendoh,
Dialogue: 0,0:09:52.16,0:09:55.26,Default,,0,0,0,,thất bại ngay tình thế ba chọi một.
Dialogue: 0,0:09:55.39,0:09:57.48,Default,,0,0,0,,Sendoh cũng xem như đã dốc hết sức rồi.
Dialogue: 0,0:09:57.67,0:10:00.98,Default,,0,0,0,,Hơn nữa một điểm đó\Nbị mất ngay khi Uozumi vừa ra sân.
Dialogue: 0,0:10:01.11,0:10:02.77,Default,,0,0,0,,Đối với câu nói chỉ cần Uozumi ra sân
Dialogue: 0,0:10:03.11,0:10:06.86,Default,,0,0,0,,thì sẽ kiểm soát được\Nđiểm số được mất của Ryonan,
Dialogue: 0,0:10:06.99,0:10:09.82,Default,,0,0,0,,cú sốc này thật sự vô cùng lớn.
Dialogue: 0,0:10:11.09,0:10:12.25,Default,,0,0,0,,Thì ra là vậy.
Dialogue: 0,0:10:13.12,0:10:16.62,Default,,0,0,0,,Xem ra Ryonan thật sự đã đi đến\Nbước đường cùng rồi.
Dialogue: 0,0:10:28.06,0:10:29.59,Default,,0,0,0,,Hanamichi! Đáng tiếc quá!
Dialogue: 0,0:10:29.72,0:10:32.59,Default,,0,0,0,,Nhưng mà Sakuragi, chơi hay lắm!
Dialogue: 0,0:10:33.59,0:10:35.72,Default,,0,0,0,,Suýt chút nữa là thành công rồi!
Dialogue: 0,0:10:37.55,0:10:42.85,Default,,0,0,0,,Phòng thủ! Phòng thủ!
Dialogue: 0,0:10:43.76,0:10:44.71,Default,,0,0,0,,Giữ lấy quả đó!
Dialogue: 0,0:10:44.80,0:10:45.53,Default,,0,0,0,,Rõ!
Dialogue: 0,0:10:49.64,0:10:52.61,Default,,0,0,0,,Vào một quả! Chúng ta hãy\Nvào được một quả đã!
Dialogue: 0,0:10:52.78,0:10:53.21,Default,,0,0,0,,Được.
Dialogue: 0,0:10:53.41,0:10:54.73,Default,,0,0,0,,Mày đừng như lúc đấu với Kainan,
Dialogue: 0,0:10:54.87,0:10:56.37,Default,,0,0,0,,"gục" ngay trên sân bóng đấy!
Dialogue: 0,0:10:56.51,0:10:58.78,Default,,0,0,0,,Tên ngốc đó nói ai vậy?
Dialogue: 0,0:10:59.16,0:11:14.41,Default,,0,0,0,,Phòng thủ! Phòng thủ! Phòng thủ!
Dialogue: 0,0:11:14.92,0:11:16.04,Default,,0,0,0,,[Vậy không được!]
Dialogue: 0,0:11:17.08,0:11:20.92,Default,,0,0,0,,Mọi người mau cỗ vũ lớn tiếng lên!\NKhông được thua người của Shohoku!
Dialogue: 0,0:11:21.38,0:11:23.90,Default,,0,0,0,,Nhất là lúc này đây,\Nkhí thế phải hơn họ mới được!
Dialogue: 0,0:11:24.04,0:11:33.08,Default,,0,0,0,,Ryonan xông lên nào! Ryonan cố lên!
Dialogue: 0,0:11:35.22,0:11:38.71,Default,,0,0,0,,[Huấn luyện viên nói cơ hội\Nchiến thắng sẽ trở về với chúng ta.]
Dialogue: 0,0:11:39.20,0:11:40.76,Default,,0,0,0,,[Là... là thật sao?]
Dialogue: 0,0:11:43.42,0:11:46.51,Default,,0,0,0,,[Nhân tố bất ổn của Shohoku rốt cuộc là gì?]
Dialogue: 0,0:11:46.75,0:11:50.77,Default,,0,0,0,,Phòng thủ!
Dialogue: 0,0:11:50.95,0:11:54.05,Default,,0,0,0,,Đã lâu lắm rồi Ryonan không ghi điểm.
Dialogue: 0,0:12:01.26,0:12:03.23,Default,,0,0,0,,[Uozumi, đến đây nào!]
Dialogue: 0,0:12:03.66,0:12:07.39,Default,,0,0,0,,[Dù là đội bóng hay bản thân cậu ấy\Nđều không còn đường lui nữa.]
Dialogue: 0,0:12:08.29,0:12:09.43,Default,,0,0,0,,[Nhận thức này]
Dialogue: 0,0:12:09.57,0:12:12.74,Default,,0,0,0,,[khiến cho Uozumi vô cùng tập trung.]
Dialogue: 0,0:12:20.15,0:12:20.98,Default,,0,0,0,,Phạm lỗi!
Dialogue: 0,0:12:22.32,0:12:24.05,Default,,0,0,0,,Phạm lỗi lần thứ năm rồi!
Dialogue: 0,0:12:45.88,0:12:48.57,Default,,0,0,0,,Sẽ rời sân vì phạm lỗi năm lần chứ?
Dialogue: 0,0:12:50.55,0:12:51.64,Default,,0,0,0,,Không thổi còi sao?
Dialogue: 0,0:12:51.96,0:12:53.02,Default,,0,0,0,,Không được xem là phạm lỗi sao?
Dialogue: 0,0:13:00.50,0:13:03.06,Default,,0,0,0,,Uozumi, cẩn thận! Không được phạm lỗi!
Dialogue: 0,0:13:06.31,0:13:08.44,Default,,0,0,0,,Sự tấn công của Uozumi hiện nay quá mạnh!
Dialogue: 0,0:13:08.71,0:13:11.59,Default,,0,0,0,,Rốt cuộc tên đấy có biết mình\Nđã phạm lỗi năm lần không vậy?
Dialogue: 0,0:13:11.72,0:13:13.66,Default,,0,0,0,,Phạm lỗi thêm một lần nữa là phải rời sân đấy.
Dialogue: 0,0:13:16.46,0:13:18.40,Default,,0,0,0,,Akagi, mau khiến cậu ta phạm lỗi đi!
Dialogue: 0,0:13:18.60,0:13:20.14,Default,,0,0,0,,Như vậy thì cậu ta sẽ phải\Nrời sân vì phạm lỗi năm lần!
Dialogue: 0,0:13:20.27,0:13:21.82,Default,,0,0,0,,Cậu ta chính là tên ngốc nhất của Nhật Bản!
Dialogue: 0,0:13:24.24,0:13:29.20,Default,,0,0,0,,[Sự tập trung là nhân tố ảnh hướng\Nlớn nhất đến việc thể hiện.]
Dialogue: 0,0:13:29.45,0:13:32.64,Default,,0,0,0,,[Khí thế của tên đó\Nhoàn toàn khác so với trước.]
Dialogue: 0,0:13:33.46,0:13:34.10,Default,,0,0,0,,Nếu cậu ta là tên ngốc
Dialogue: 0,0:13:34.10,0:13:36.33,Default,,0,0,0,,bị loại trong lúc cấp bách như thế này
Dialogue: 0,0:13:36.46,0:13:38.47,Default,,0,0,0,,thì cậu ta sẽ không thể nào trở thành\Ncầu thủ số 4 của Ryonan được.
Dialogue: 0,0:13:38.66,0:13:40.87,Default,,0,0,0,,Tên đó đã tìm ra được giới hạn.
Dialogue: 0,0:13:41.57,0:13:42.51,Default,,0,0,0,,Giới hạn?
Dialogue: 0,0:13:42.79,0:13:45.32,Default,,0,0,0,,Vừa nãy trọng tài không thổi còi,\Nkhông được tính là phạm lỗi.
Dialogue: 0,0:13:45.73,0:13:47.76,Default,,0,0,0,,Cũng đồng nghĩa với việc đối với trọng tài,
Dialogue: 0,0:13:47.93,0:13:50.49,Default,,0,0,0,,sự va chạm đó là hợp lý.
Dialogue: 0,0:13:50.70,0:13:53.23,Default,,0,0,0,,Bây giờ ông ta không phạt,\Nlát nữa cũng sẽ không phạt.
Dialogue: 0,0:13:53.51,0:13:55.84,Default,,0,0,0,,Lần này Uozumi đã tìm ra được\Ngiới hạn của trọng tài là ở mức độ nào,
Dialogue: 0,0:13:55.99,0:13:59.52,Default,,0,0,0,,vì cậu ta biết được giới hạn\Ncủa trọng tài là ở mức nào.
Dialogue: 0,0:14:05.50,0:14:10.00,Default,,0,0,0,,[Akagi Takenori, lớp 12, cao 197cm, nặng 90kg.]
Dialogue: 0,0:14:06.21,0:14:09.00,Default,,0,0,0,,[Akagi Takenori - Lớp 12]\N[197cm - 90kg]
Dialogue: 0,0:14:11.38,0:14:15.61,Default,,0,0,0,,[Uozumi, lớp 12, cao 202cm, nặng 90kg.]
Dialogue: 0,0:14:12.17,0:14:15.91,Default,,0,0,0,,[Uozumi Jun - Lớp 12]\N[202cm - 90kg]
Dialogue: 0,0:14:16.46,0:14:19.08,Default,,0,0,0,,[Về ngoại hình,\Nhai người đều không phân cao thấp.]
Dialogue: 0,0:14:19.56,0:14:21.55,Default,,0,0,0,,[Về độ xấu, hai người cũng không ai kém hơn ai.]
Dialogue: 0,0:14:22.03,0:14:26.69,Default,,0,0,0,,[Nhưng đánh giá về Uozumi\Nthì luôn không tốt bằng Akagi.]
Dialogue: 0,0:14:29.50,0:14:31.37,Default,,0,0,0,,Uozumi, cậu đừng hòng ra tay!
Dialogue: 0,0:14:32.00,0:14:35.17,Default,,0,0,0,,Akagi, cách phòng thủ\Ncủa cậu vẫn luôn tốt như thế.
Dialogue: 0,0:14:37.18,0:14:37.70,Default,,0,0,0,,Sendoh!
Dialogue: 0,0:14:44.18,0:14:47.41,Default,,0,0,0,,[Nhất định phải vào được!\NQuả này nhất định phải vào được!]
Dialogue: 0,0:14:53.09,0:14:54.06,Default,,0,0,0,,Cậu sao vậy?
Dialogue: 0,0:14:54.26,0:14:58.39,Default,,0,0,0,,Không phân thắng thua với tôi sao, Uozumi!\NĐồ vô dụng!
Dialogue: 0,0:14:59.60,0:15:02.00,Default,,0,0,0,,Akagi, cậu im miệng cho tôi! Im miệng!
Dialogue: 0,0:15:11.61,0:15:14.14,Default,,0,0,0,,Lúc trước người nổi tiếng trước là tôi.
Dialogue: 0,0:15:20.43,0:15:21.56,Default,,0,0,0,,Cao quá!
Dialogue: 0,0:15:21.68,0:15:22.77,Default,,0,0,0,,Uozumi to lớn!
Dialogue: 0,0:15:22.80,0:15:26.46,Default,,0,0,0,,Đó là học sinh lớp 10 cao 199cm, Uozumi Jun.
Dialogue: 0,0:15:33.47,0:15:36.33,Default,,0,0,0,,[Thân hình của tên đó gần giống như mình.]
Dialogue: 0,0:15:37.27,0:15:38.33,Default,,0,0,0,,Đầu trọc sao?
Dialogue: 0,0:15:38.80,0:15:40.77,Default,,0,0,0,,Tôi thấy cậu ta đứng ngoài sân.
Dialogue: 0,0:15:41.04,0:15:44.84,Default,,0,0,0,,Là ai nhỉ? Cao hơn 190cm.
Dialogue: 0,0:15:45.41,0:15:46.23,Default,,0,0,0,,Xin lỗi.
Dialogue: 0,0:15:46.68,0:15:47.48,Default,,0,0,0,,Phải rồi.
Dialogue: 0,0:15:47.58,0:15:50.87,Default,,0,0,0,,Shohoku có một học sinh lớp 10 cao 193cm.
Dialogue: 0,0:15:50.98,0:15:52.27,Default,,0,0,0,,Có lẽ người mà cậu nhìn thấy là cậu ta.
Dialogue: 0,0:15:52.38,0:15:53.81,Default,,0,0,0,,193cm?
Dialogue: 0,0:15:54.05,0:15:55.91,Default,,0,0,0,,Cậu có muốn đấu với cậu ta luôn không?
Dialogue: 0,0:15:58.92,0:15:59.98,Default,,0,0,0,,Nhưng rất tiếc,
Dialogue: 0,0:16:00.19,0:16:02.92,Default,,0,0,0,,Shohoku không thể trụ được\Nđến lúc quyết đấu với cậu.
Dialogue: 0,0:16:09.12,0:16:10.20,Default,,0,0,0,,Trụ cột sao?
Dialogue: 0,0:16:11.34,0:16:13.66,Default,,0,0,0,,Không sao,\Nbây giờ các người cố gắng mà mừng đi.
Dialogue: 0,0:16:13.79,0:16:20.85,Default,,0,0,0,,Phòng thủ!
Dialogue: 0,0:16:24.60,0:16:25.91,Default,,0,0,0,,Đừng để cậu ta ném!
Dialogue: 0,0:16:25.91,0:16:28.68,Default,,0,0,0,,Được rồi, xem tôi đây! Xem tôi đây!
Dialogue: 0,0:16:28.76,0:16:31.69,Default,,0,0,0,,Không còn nhiều thời gian nữa! Còn tám giây!
Dialogue: 0,0:16:36.57,0:16:39.71,Default,,0,0,0,,[Một năm trước, vòng loại các trường cấp ba]
Dialogue: 0,0:16:40.20,0:16:42.00,Default,,0,0,0,,Giữ bóng hơn 30 giây.
Dialogue: 0,0:16:42.24,0:16:44.14,Default,,0,0,0,,Cậu làm gì vậy, Uozumi!
Dialogue: 0,0:16:45.57,0:16:47.51,Default,,0,0,0,,Uozumi lại chưa ném rổ.
Dialogue: 0,0:16:52.62,0:16:55.18,Default,,0,0,0,,Akagi, phòng thủ tốt lắm! Làm tốt lắm!
Dialogue: 0,0:16:57.10,0:16:58.50,Default,,0,0,0,,Thật kinh ngạc!
Dialogue: 0,0:16:58.87,0:17:01.46,Default,,0,0,0,,Không ngờ Uozumi bị áp chế hoàn toàn.
Dialogue: 0,0:17:01.59,0:17:04.61,Default,,0,0,0,,Đúng vậy, sự phòng thủ của Shohoku\Ndưới khung rổ đúng là rất chặt chẽ.
Dialogue: 0,0:17:05.56,0:17:07.22,Default,,0,0,0,,Đừng để bụng, Uozumi!
Dialogue: 0,0:17:08.96,0:17:10.86,Default,,0,0,0,,Xem ra Shohoku thua chắc rồi.
Dialogue: 0,0:17:13.00,0:17:15.03,Default,,0,0,0,,Ý chí chiến đấu của họ rất mạnh.
Dialogue: 0,0:17:15.34,0:17:17.24,Default,,0,0,0,,Khi thua mất nhiều điểm như vậy,
Dialogue: 0,0:17:17.38,0:17:19.22,Default,,0,0,0,,cầu thủ của những đội bóng thường\Nđã không còn tâm trạng để chơi tiếp nữa.
Dialogue: 0,0:17:21.02,0:17:22.51,Default,,0,0,0,,Akagi Takenori.
Dialogue: 0,0:17:25.36,0:17:27.45,Default,,0,0,0,,[Trận đấu một năm trước]
Dialogue: 0,0:17:27.57,0:17:30.01,Default,,0,0,0,,[đã khiến cho nhận xét của tôi\Nvà Akagi hoàn toàn đảo ngược.]
Dialogue: 0,0:17:31.76,0:17:33.87,Default,,0,0,0,,[Chết tiệt! Chết tiệt!]
Dialogue: 0,0:17:33.97,0:17:37.77,Default,,0,0,0,,[Điều khiến tôi không cam tâm nhất\Nchính là chiều cao của cậu ta không bằng tôi.]
Dialogue: 0,0:17:43.71,0:17:45.47,Default,,0,0,0,,["Ngoài trừ chiều cao,"]
Dialogue: 0,0:17:45.68,0:17:47.04,Default,,0,0,0,,["Uozumi không có gì hơn cả."]
Dialogue: 0,0:17:48.18,0:17:50.84,Default,,0,0,0,,[Cứ nghĩ đến việc\NAkagi đánh giá tôi như thế nào]
Dialogue: 0,0:17:51.01,0:17:52.76,Default,,0,0,0,,[là tôi không thể nào ngồi yên được.]
Dialogue: 0,0:17:53.41,0:17:56.28,Default,,0,0,0,,[Tôi đã tăng cường luyện tập\Ncác bước chạy mà tôi từng rất ghét,]
Dialogue: 0,0:17:56.42,0:17:58.25,Default,,0,0,0,,[nâng cao luyện tập các bước cơ bản.]
Dialogue: 0,0:17:59.23,0:18:00.61,Default,,0,0,0,,[Tất cả mọi thứ đều vì]
Dialogue: 0,0:18:00.63,0:18:02.78,Default,,0,0,0,,[không muốn thua\Nsự phòng thủ dưới rổ của Akagi.]
Dialogue: 0,0:18:04.03,0:18:08.69,Default,,0,0,0,,["Ngoài việc cao, chẳng có gì hơn cả",\Ntôi hoàn toàn không chấp nhận cách nói này.]
Dialogue: 0,0:18:12.34,0:18:15.74,Default,,0,0,0,,Uozumi, không còn nhiều thời gian nữa!\NMau phân thắng bại đi!
Dialogue: 0,0:18:15.94,0:18:17.91,Default,,0,0,0,,Akagi! Phòng thủ đi,\Nđừng để cậu ta ném được bóng!
Dialogue: 0,0:18:18.11,0:18:19.08,Default,,0,0,0,,Cậu đừng hòng ném được!
Dialogue: 0,0:18:33.42,0:18:34.41,Default,,0,0,0,,Akagi!
Dialogue: 0,0:18:35.03,0:18:36.18,Default,,0,0,0,,Vòng đấu loại cho giải toàn quốc,
Dialogue: 0,0:18:36.21,0:18:38.65,Default,,0,0,0,,tôi nhất định sẽ đánh bại cậu,\Ncậu nhớ đấy.
Dialogue: 0,0:18:39.59,0:18:40.87,Default,,0,0,0,,Đừng có mạnh miệng như thế.
Dialogue: 0,0:18:42.49,0:18:46.43,Default,,0,0,0,,[Trong trận đấu tập, Akagi ghi được 30 điểm.]
Dialogue: 0,0:18:46.70,0:18:47.96,Default,,0,0,0,,[Tròn 30 điểm!]
Dialogue: 0,0:18:49.67,0:18:53.36,Default,,0,0,0,,[Cậu ta có trực giác về việc\Nghi điểm dưới rổ rất rõ ràng,]
Dialogue: 0,0:18:54.14,0:18:55.20,Default,,0,0,0,,[còn tôi thì không.]
Dialogue: 0,0:18:59.51,0:19:01.98,Default,,0,0,0,,Đến đây nào!\NUozumi, tôi sẽ không để cậu ném được đâu!
Dialogue: 0,0:19:02.18,0:19:05.94,Default,,0,0,0,,Đúng vậy, phòng thủ tốt lắm, Akagi!\NCậu ta không thể ra tay được nữa!
Dialogue: 0,0:19:06.83,0:19:07.70,Default,,0,0,0,,Hết giờ rồi!
Dialogue: 0,0:19:10.20,0:19:11.69,Default,,0,0,0,,[Không lẽ tôi thua rồi sao?]
Dialogue: 0,0:19:12.51,0:19:14.77,Default,,0,0,0,,Được rồi, Akagi, sắp 30 giây rồi!
Dialogue: 0,0:19:15.71,0:19:17.00,Default,,0,0,0,,[Không đúng!]
Dialogue: 0,0:19:21.92,0:19:22.68,Default,,0,0,0,,Akagi!
Dialogue: 0,0:19:24.72,0:19:25.18,Default,,0,0,0,,Gì?
Dialogue: 0,0:19:26.29,0:19:26.95,Default,,0,0,0,,Sendoh!
Dialogue: 0,0:19:31.01,0:19:32.25,Default,,0,0,0,,Cẩn thận, Fukuda!
Dialogue: 0,0:19:43.43,0:19:46.02,Default,,0,0,0,,Tuyệt! Tuyệt!
Dialogue: 0,0:19:50.87,0:19:54.74,Default,,0,0,0,,Cuối cùng, cuối cùng chúng ta\Ncũng vào được một quả.
Dialogue: 0,0:19:57.58,0:19:59.71,Default,,0,0,0,,[Trong đội chúng tôi\Ncũng có những người giỏi việc ghi điểm,]
Dialogue: 0,0:19:59.95,0:20:03.28,Default,,0,0,0,,[tôi không cần thiết phải giành 30 40 điểm đó,]
Dialogue: 0,0:20:04.55,0:20:07.35,Default,,0,0,0,,[tôi cũng không cần giành\Nchức nhân vật chính của đội bóng.]
Dialogue: 0,0:20:12.06,0:20:16.15,Default,,0,0,0,,[Đúng vậy, như thế mới là\Ntrụ cột của chúng ta, Uozumi!]
Dialogue: 0,0:20:16.63,0:20:22.39,Default,,0,0,0,,Phòng thủ! Phòng thủ!
Dialogue: 0,0:20:22.50,0:20:25.47,Default,,0,0,0,,Mọi người phòng thủ cho tốt vào,\Nphòng thủ quả đó.
Dialogue: 0,0:20:27.67,0:20:29.75,Default,,0,0,0,,Tuyệt vời! Bây giờ bắt đầu phản công!
Dialogue: 0,0:20:30.47,0:20:33.64,Default,,0,0,0,,Tấn công! Mau cho chúng hít khói đi!
Dialogue: 0,0:20:35.68,0:20:39.12,Default,,0,0,0,,[Sự quay lại của Uozumi đã khiến\NRyonan ghi được một điểm.]
Dialogue: 0,0:20:40.54,0:20:44.41,Default,,0,0,0,,[Bây giờ tình thế của trận đấu\Nlại hướng về phía Ryonan.]
Dialogue: 0,0:20:57.50,0:21:00.30,Default,,0,0,0,,♫ Trong giấc mơ nhếch nhác thảm hại ♫
Dialogue: 0,0:21:01.25,0:21:03.69,Default,,0,0,0,,♫ Tôi bỗng choàng tỉnh ♫
Dialogue: 0,0:21:05.01,0:21:09.13,Default,,0,0,0,,♫ Lại một buổi sớm với ánh nắng rực rỡ ♫
Dialogue: 0,0:21:12.65,0:21:18.80,Default,,0,0,0,,♫ Nghe bài hát mình thích ♫
Dialogue: 0,0:21:20.18,0:21:26.00,Default,,0,0,0,,♫ Mặc chiếc áo sơ mi sạch sẽ ♫
Dialogue: 0,0:21:27.44,0:21:30.10,Default,,0,0,0,,♫ Đêm qua ♫
Dialogue: 0,0:21:30.40,0:21:33.87,Default,,0,0,0,,♫ Có người nói với tôi với vẻ mệt mỏi rằng ♫
Dialogue: 0,0:21:34.30,0:21:36.22,Default,,0,0,0,,♫ Muốn tìm kiếm kích thích ♫
Dialogue: 0,0:21:36.38,0:21:39.75,Default,,0,0,0,,♫ Muốn đột phá thực tại ♫
Dialogue: 0,0:21:39.90,0:21:42.03,Default,,0,0,0,,♫ Đừng lún sâu như thế nữa ♫
Dialogue: 0,0:21:42.16,0:21:46.14,Default,,0,0,0,,♫ Hãy nắm giữ khoảnh khắc tỏa sáng ♫
