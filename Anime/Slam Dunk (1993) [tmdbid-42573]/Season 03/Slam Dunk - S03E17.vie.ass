Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.75,0:00:20.71,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.75,0:00:24.42,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.84,0:00:30.11,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.38,0:00:36.58,Default,,0,0,0,,♫  Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.32,0:00:44.26,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.16,0:00:50.86,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.30,0:00:57.14,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.40,0:01:02.97,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.51,0:01:10.28,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:14.02,0:01:19.72,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:20.19,0:01:25.80,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.03,0:01:31.80,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:32.17,0:01:40.55,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:55.85,0:01:58.27,Default,,0,0,0,,[Ngày cuối cùng\Ncủa tuần chung kết giải đấu toàn tỉnh,]
Dialogue: 0,0:01:58.90,0:02:02.13,Default,,0,0,0,,[Trận đấu giành quyền đại diện tham gia]
Dialogue: 0,0:02:02.22,0:02:05.55,Default,,0,0,0,,[giải đấu những trường cấp ba toàn quốc\Ncủa Shohoku và kẻ địch Ryonan đã bắt đầu.]
Dialogue: 0,0:02:17.74,0:02:21.31,Default,,0,0,0,,[Trận đấu mở màn chưa bao lâu,\NShohoku đã bị Ryonan dẫn trước hai điểm.]
Dialogue: 0,0:02:21.85,0:02:23.29,Default,,0,0,0,,[Nhưng ngay sau đó, Hanamichi lại thể hiện\Nthành quả sau đợt đặc huấn]
Dialogue: 0,0:02:23.31,0:02:26.32,Default,,0,0,0,,[ném dưới bảng rổ ghi điểm, san bằng tỉ số, Hanamichi thừa thắng\Nxông lên khiến mọi người bất ngờ trước tài năng.]
Dialogue: 0,0:02:41.47,0:02:44.50,Default,,0,0,0,,[Nhưng Ryonan đã nhanh chóng\Nxốc lại tinh thần,]
Dialogue: 0,0:02:44.52,0:02:48.44,Default,,0,0,0,,[áp dụng chiến thuật cho Fukuda\Nkèm chặt Hanamichi.]
Dialogue: 0,0:02:57.39,0:03:00.03,Default,,0,0,0,,[Điều này không những dấy lên\Ný chí chiến đấu của Hanamichi]
Dialogue: 0,0:03:01.15,0:03:04.26,Default,,0,0,0,,[mà cả hai người Akagi và Uozumi]
Dialogue: 0,0:03:04.28,0:03:06.95,Default,,0,0,0,,[cũng bộc lộ sự đối địch mãnh liệt]
Dialogue: 0,0:03:06.98,0:03:09.29,Default,,0,0,0,,[để tranh giành ngôi vị trung phong\Nđứng đầu của tỉnh.]
Dialogue: 0,0:03:16.46,0:03:19.24,Default,,0,0,0,,Đừng tưởng các cậu đến dưới bảng rổ\Nthì sẽ ghi điểm được.
Dialogue: 0,0:03:19.26,0:03:22.14,Default,,0,0,0,,Akagi, Rukawa, Sakuragi.
Dialogue: 0,0:03:22.37,0:03:23.35,Default,,0,0,0,,Nói gì đó?
Dialogue: 0,0:03:23.38,0:03:26.51,Default,,0,0,0,,Đáng ghét, Thủ Lĩnh Người Vượn.
Dialogue: 0,0:03:28.24,0:03:30.58,Default,,0,0,0,,Cậu vẫn ngông cuồng như vậy.
Dialogue: 0,0:03:32.30,0:03:33.91,Default,,0,0,0,,Uozumi, đừng xem thường tôi.
Dialogue: 0,0:03:34.48,0:03:42.79,Default,,0,0,0,,[Sự khác thường của Tinh Tinh!]
Dialogue: 0,0:03:36.47,0:03:38.12,Default,,0,0,0,,[Sự khác thường của Tinh Tinh!]
Dialogue: 0,0:03:47.98,0:03:48.66,Default,,0,0,0,,Chuyền cho tôi!
Dialogue: 0,0:03:58.72,0:04:00.61,Default,,0,0,0,,[Uozumi, đừng được nước lấn tới.]
Dialogue: 0,0:04:06.02,0:04:07.22,Default,,0,0,0,,Hay!
Dialogue: 0,0:04:22.12,0:04:23.42,Default,,0,0,0,,Anh.
Dialogue: 0,0:04:24.31,0:04:26.03,Default,,0,0,0,,Phạm lỗi, màu trắng số 4.
Dialogue: 0,0:04:26.34,0:04:29.05,Default,,0,0,0,,Nghe tiếng có vẻ ngã nặng lắm,\Nkhông biết có sao không.
Dialogue: 0,0:04:29.55,0:04:33.06,Default,,0,0,0,,Đáng ghét, Thủ Lĩnh Người Vượn,\Nanh cố tình phải không?
Dialogue: 0,0:04:34.29,0:04:36.95,Default,,0,0,0,,Tôi không ngờ như vậy\Nsẽ khiến cậu ngã chổng vó,
Dialogue: 0,0:04:37.32,0:04:38.09,Default,,0,0,0,,xin lỗi nhé.
Dialogue: 0,0:04:45.00,0:04:46.40,Default,,0,0,0,,Tên này kiêu căng quá đấy.
Dialogue: 0,0:04:46.83,0:04:48.92,Default,,0,0,0,,Akagi, đừng để bị anh ta khiêu khích.
Dialogue: 0,0:04:50.04,0:04:51.24,Default,,0,0,0,,Tôi biết.
Dialogue: 0,0:04:59.38,0:05:01.35,Default,,0,0,0,,- Ném phạt.\N- Vâng.
Dialogue: 0,0:05:10.69,0:05:11.52,Default,,0,0,0,,Không sao chứ?
Dialogue: 0,0:05:15.53,0:05:16.69,Default,,0,0,0,,Phạt hai quả.
Dialogue: 0,0:05:17.13,0:05:19.93,Default,,0,0,0,,Akagi, nhờ cả vào cậu đấy, ném chính xác nhé.
Dialogue: 0,0:05:19.93,0:05:21.54,Default,,0,0,0,,Trân trọng nó nào.
Dialogue: 0,0:05:21.56,0:05:23.23,Default,,0,0,0,,Lấy hai điểm.
Dialogue: 0,0:05:33.21,0:05:35.44,Default,,0,0,0,,- Ném trật rồi.\N- Hay lắm, hay lắm.
Dialogue: 0,0:05:36.14,0:05:38.41,Default,,0,0,0,,Không sao, chỉ cần vào một quả là được.
Dialogue: 0,0:05:57.40,0:05:59.58,Default,,0,0,0,,Hai quả đều không vào.
Dialogue: 0,0:05:59.60,0:06:00.48,Default,,0,0,0,,Đáng tiếc quá.
Dialogue: 0,0:06:03.60,0:06:05.87,Default,,0,0,0,,Hay quá, bắt bóng bật bảng hay lắm.
Dialogue: 0,0:06:08.43,0:06:09.46,Default,,0,0,0,,Chạy mau lên!
Dialogue: 0,0:06:10.62,0:06:11.54,Default,,0,0,0,,Phản công!
Dialogue: 0,0:06:19.08,0:06:21.58,Default,,0,0,0,,Chết tiệt, Fukuda, không để anh làm được đâu.
Dialogue: 0,0:06:35.27,0:06:36.34,Default,,0,0,0,,Đáng ghét.
Dialogue: 0,0:06:52.08,0:06:52.98,Default,,0,0,0,,[Động tác giả!]
Dialogue: 0,0:06:57.62,0:06:58.78,Default,,0,0,0,,Tiêu rồi.
Dialogue: 0,0:07:00.69,0:07:02.89,Default,,0,0,0,,Màu đỏ số 10 phạm lỗi, phạt một quả.
Dialogue: 0,0:07:02.91,0:07:04.53,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:07:05.93,0:07:07.60,Default,,0,0,0,,Hay quá Fukuda.
Dialogue: 0,0:07:10.10,0:07:12.07,Default,,0,0,0,,Hay lắm, thuận lợi quá.
Dialogue: 0,0:07:16.97,0:07:17.90,Default,,0,0,0,,Làm tốt lắm.
Dialogue: 0,0:07:24.75,0:07:26.15,Default,,0,0,0,,Lần này tôi lại thắng rồi.
Dialogue: 0,0:07:37.02,0:07:39.95,Default,,0,0,0,,Đáng ghét quá đi mất,\Nlại để họ ném vào một quả phạt.
Dialogue: 0,0:07:39.98,0:07:43.01,Default,,0,0,0,,Đến bây giờ, điểm của Ryonan\Ntoàn là do Fukuda ghi được.
Dialogue: 0,0:07:43.35,0:07:45.35,Default,,0,0,0,,Không sao,\Nghi điểm ngược trở lại là được thôi.
Dialogue: 0,0:07:45.64,0:07:47.99,Default,,0,0,0,,Tấn công, tấn công!
Dialogue: 0,0:07:56.22,0:07:57.32,Default,,0,0,0,,Chuyền lỗi!
Dialogue: 0,0:07:58.50,0:07:59.27,Default,,0,0,0,,Bóng áo trắng.
Dialogue: 0,0:08:06.91,0:08:12.41,Default,,0,0,0,,Ryonan, thừa thắng xông lên nào!
Dialogue: 0,0:08:12.52,0:08:14.23,Default,,0,0,0,,Anh đang ngơ gì vậy Tinh Tinh Bự?
Dialogue: 0,0:08:14.53,0:08:16.84,Default,,0,0,0,,Sao mà còn chuyền lỗi nữa.
Dialogue: 0,0:08:17.69,0:08:20.46,Default,,0,0,0,,Đừng nói anh cũng sợ\Ncái tên Thủ Lĩnh Người Vượn kia nhé?
Dialogue: 0,0:08:20.72,0:08:21.82,Default,,0,0,0,,Nói bậy bạ.
Dialogue: 0,0:08:24.87,0:08:25.60,Default,,0,0,0,,[Akagi.]
Dialogue: 0,0:08:26.93,0:08:28.64,Default,,0,0,0,,Đừng để ý, ngăn cản đối phương tấn công đi.
Dialogue: 0,0:08:37.48,0:08:39.61,Default,,0,0,0,,[Hình như tình huống của Akagi không ổn lắm.]
Dialogue: 0,0:08:44.61,0:08:45.26,Default,,0,0,0,,Đại ca!
Dialogue: 0,0:08:46.85,0:08:49.29,Default,,0,0,0,,- Tinh Tinh Bự, lên nào.\N- Tinh Tinh Bự, cố lên!
Dialogue: 0,0:08:49.79,0:08:50.60,Default,,0,0,0,,Anh.
Dialogue: 0,0:08:51.36,0:08:52.13,Default,,0,0,0,,- Akagi.\N- Đàn anh.
Dialogue: 0,0:09:00.70,0:09:04.33,Default,,0,0,0,,[Mình có xoay người được không?\NChân của mình...]
Dialogue: 0,0:09:05.24,0:09:08.54,Default,,0,0,0,,[Chân của mình vẫn bước được,\Nchắc vết thương không xấu đi đâu.]
Dialogue: 0,0:09:09.98,0:09:13.68,Default,,0,0,0,,[Băng gạc đâu? Băng gạc có chặt không?]
Dialogue: 0,0:09:33.21,0:09:34.92,Default,,0,0,0,,Tốt quá, đến đây nào!
Dialogue: 0,0:09:35.72,0:09:37.61,Default,,0,0,0,,[Hình như băng gạc bị lỏng rồi.]
Dialogue: 0,0:09:38.23,0:09:40.86,Default,,0,0,0,,[Biết vậy thì ngay từ đầu nên buộc chặt chút.]
Dialogue: 0,0:09:44.84,0:09:46.47,Default,,0,0,0,,Akagi, lên đi.
Dialogue: 0,0:09:51.40,0:09:53.61,Default,,0,0,0,,Đáng ghét, Uozumi.
Dialogue: 0,0:09:58.92,0:09:59.97,Default,,0,0,0,,Không tấn công được.
Dialogue: 0,0:10:00.18,0:10:02.48,Default,,0,0,0,,Uozumi, thủ tốt lắm!
Dialogue: 0,0:10:03.05,0:10:04.85,Default,,0,0,0,,[Rốt cuộc Akagi làm sao vậy?]
Dialogue: 0,0:10:07.86,0:10:10.46,Default,,0,0,0,,Đã không còn thời gian nữa,\Nsắp quá 30 giây rồi.
Dialogue: 0,0:10:10.56,0:10:12.63,Default,,0,0,0,,Hãy mau tấn công đi Akagi.
Dialogue: 0,0:10:15.26,0:10:16.60,Default,,0,0,0,,Còn sáu giây nữa.
Dialogue: 0,0:10:17.43,0:10:19.07,Default,,0,0,0,,Quy định 30 giây...
Dialogue: 0,0:10:19.98,0:10:21.29,Default,,0,0,0,,Lấy được bóng trong 30 giây
Dialogue: 0,0:10:21.42,0:10:24.09,Default,,0,0,0,,phải ném bóng trong vòng 30 giây mới được.
Dialogue: 0,0:10:24.28,0:10:25.54,Default,,0,0,0,,Chỉ có 30 giây á?
Dialogue: 0,0:10:25.88,0:10:27.11,Default,,0,0,0,,[Còn cơ hội cuối cùng.]
Dialogue: 0,0:10:27.85,0:10:31.68,Default,,0,0,0,,[Nếu thua trận này thì cánh cửa đi đến\Ngiải đấu toàn quốc sẽ bị đóng lại.]
Dialogue: 0,0:10:34.59,0:10:38.10,Default,,0,0,0,,[Hôm nay huấn luyện viên Anzai\Nkhông đến xem trận đấu,]
Dialogue: 0,0:10:39.13,0:10:40.49,Default,,0,0,0,,[mình là đội trưởng, nhất định phải...]
Dialogue: 0,0:10:41.31,0:10:42.32,Default,,0,0,0,,Akagi.
Dialogue: 0,0:10:44.49,0:10:46.01,Default,,0,0,0,,[Không thể nghĩ nhiều thế nữa,]
Dialogue: 0,0:10:46.40,0:10:48.29,Default,,0,0,0,,[cần tập trung tinh thần chơi bóng.]
Dialogue: 0,0:10:50.25,0:10:51.58,Default,,0,0,0,,Còn hai giây nữa.
Dialogue: 0,0:10:51.61,0:10:52.41,Default,,0,0,0,,Anh!
Dialogue: 0,0:10:53.59,0:10:54.93,Default,,0,0,0,,Cậu đừng hòng ném được!
Dialogue: 0,0:10:58.63,0:11:02.20,Default,,0,0,0,,Cái chân này của mình\Ncó thắng được Uozumi không?
Dialogue: 0,0:11:29.53,0:11:32.74,Default,,0,0,0,,Quá 30 giây rồi mà anh ấy vẫn không ném ra.
Dialogue: 0,0:11:35.67,0:11:38.70,Default,,0,0,0,,Phòng thủ rất tốt, phòng thủ tuyệt lắm.
Dialogue: 0,0:11:39.37,0:11:40.14,Default,,0,0,0,,Uekusa,
Dialogue: 0,0:11:42.84,0:11:44.75,Default,,0,0,0,,tấn công cùng Uozumi đi.
Dialogue: 0,0:11:46.88,0:11:49.35,Default,,0,0,0,,Maki, hình như Akagi trông hơi lạ.
Dialogue: 0,0:11:49.62,0:11:53.05,Default,,0,0,0,,Đúng, động tác của cậu ta rất chậm.
Dialogue: 0,0:11:55.26,0:11:57.09,Default,,0,0,0,,Cậu sao vậy? Xốc lại tinh thần tấn công nào.
Dialogue: 0,0:11:57.93,0:12:00.36,Default,,0,0,0,,Tôi không cho phép\Ncậu thua Uozumi trong sân đấu đâu, Akagi.
Dialogue: 0,0:12:00.86,0:12:03.06,Default,,0,0,0,,Tất, tất nhiên rồi.
Dialogue: 0,0:12:03.60,0:12:07.44,Default,,0,0,0,,Ryonan!
Dialogue: 0,0:12:07.47,0:12:11.55,Default,,0,0,0,,Ryonan!
Dialogue: 0,0:12:11.57,0:12:16.44,Default,,0,0,0,,Ryonan!
Dialogue: 0,0:12:25.89,0:12:26.42,Default,,0,0,0,,Uozumi,
Dialogue: 0,0:12:27.89,0:12:29.86,Default,,0,0,0,,bọn em sẽ cố gắng chuyền bóng cho anh.
Dialogue: 0,0:12:31.19,0:12:31.89,Default,,0,0,0,,Vậy thì đến đây!
Dialogue: 0,0:13:02.46,0:13:03.82,Default,,0,0,0,,Uozumi, bóng tốt!
Dialogue: 0,0:13:06.46,0:13:08.26,Default,,0,0,0,,Koshino, chuyền cho Uozumi đi.
Dialogue: 0,0:13:09.56,0:13:10.30,Default,,0,0,0,,Nhờ anh đấy!
Dialogue: 0,0:13:13.07,0:13:13.99,Default,,0,0,0,,Lại là Uozumi!
Dialogue: 0,0:13:14.01,0:13:16.78,Default,,0,0,0,,Anh đừng hòng ra tay, Thủ Lĩnh Người Vượn!
Dialogue: 0,0:13:31.82,0:13:33.29,Default,,0,0,0,,Vào rổ ghi điểm!
Dialogue: 0,0:13:38.63,0:13:39.99,Default,,0,0,0,,Uozumi đang gào lên!
Dialogue: 0,0:13:40.66,0:13:42.43,Default,,0,0,0,,Uozumi ném vào ba quả liên tiếp.
Dialogue: 0,0:13:42.53,0:13:47.93,Default,,0,0,0,,Ryonan rảo bước đến giải đấu toàn quốc,\NUozumi phát huy bản lĩnh của quái vật rồi!
Dialogue: 0,0:13:48.05,0:13:49.72,Default,,0,0,0,,Giỏi quá đi!
Dialogue: 0,0:13:49.93,0:13:51.55,Default,,0,0,0,,Akagi làm sao vậy?
Dialogue: 0,0:13:54.88,0:13:58.37,Default,,0,0,0,,Cái tên Thủ Lĩnh Người Vượn này\Nkhinh thường người khác quá rồi đấy!
Dialogue: 0,0:13:59.40,0:14:00.23,Default,,0,0,0,,Phạt thêm một quả.
Dialogue: 0,0:14:01.34,0:14:02.80,Default,,0,0,0,,Không giống Akagi bình thường chút nào.
Dialogue: 0,0:14:03.64,0:14:06.41,Default,,0,0,0,,Lần trước đấu với chúng ta\Nkhông phải như thế này.
Dialogue: 0,0:14:08.14,0:14:09.28,Default,,0,0,0,,- Kogure.\N- Vâng.
Dialogue: 0,0:14:10.38,0:14:12.21,Default,,0,0,0,,Sau khi bóng vào rổ,\Ncậu xin trọng tài cho tạm dừng đi.
Dialogue: 0,0:14:13.41,0:14:15.45,Default,,0,0,0,,Vì tên Akagi này có hơi khác thường.
Dialogue: 0,0:14:15.48,0:14:17.82,Default,,0,0,0,,Cái gì? Chẳng lẽ...
Dialogue: 0,0:14:18.29,0:14:21.36,Default,,0,0,0,,Có thể vấn đề ở chỗ lúc va chạm với Uozumi.
Dialogue: 0,0:14:25.76,0:14:28.26,Default,,0,0,0,,Vốn dĩ ban đầu rất tập trung tinh thần,
Dialogue: 0,0:14:29.16,0:14:33.40,Default,,0,0,0,,nhưng sau lần bị va trúng làm cậu ta\Nchú ý đến cái chân bị thương của mình,
Dialogue: 0,0:14:34.60,0:14:37.04,Default,,0,0,0,,sau đó đã đặt sự chú ý\Nlên cái chân bị thương của cậu ta.
Dialogue: 0,0:14:37.57,0:14:39.57,Default,,0,0,0,,Suy nghĩ này cứ quanh quẩn trong đầu cậu ta,
Dialogue: 0,0:14:40.44,0:14:43.71,Default,,0,0,0,,không chừng sẽ kéo dài\Ncho đến khi kết thúc trận đấu mất.
Dialogue: 0,0:14:49.85,0:14:52.15,Default,,0,0,0,,- Ném không vào.\N- Cậu đang làm gì vậy?
Dialogue: 0,0:14:52.55,0:14:57.32,Default,,0,0,0,,Ném không vào.
Dialogue: 0,0:14:59.00,0:15:00.37,Default,,0,0,0,,Đây là nguyền rủa.
Dialogue: 0,0:15:00.60,0:15:04.04,Default,,0,0,0,,Ném không vào.
Dialogue: 0,0:15:04.07,0:15:08.20,Default,,0,0,0,,Ném không vào.
Dialogue: 0,0:15:08.23,0:15:11.60,Default,,0,0,0,,Ném không vào.
Dialogue: 0,0:15:11.62,0:15:14.94,Default,,0,0,0,,Ném không vào.
Dialogue: 0,0:15:15.47,0:15:16.53,Default,,0,0,0,,Tiêu rồi.
Dialogue: 0,0:15:22.19,0:15:23.26,Default,,0,0,0,,Thành công rồi!
Dialogue: 0,0:15:24.06,0:15:25.17,Default,,0,0,0,,Ném trượt hoàn toàn!
Dialogue: 0,0:15:25.20,0:15:27.33,Default,,0,0,0,,Haruko, đó là gì?
Dialogue: 0,0:15:27.39,0:15:30.30,Default,,0,0,0,,Nghĩa là khi ném rổ mà quả bóng\Ncòn chẳng chạm được đến vành rổ.
Dialogue: 0,0:15:30.53,0:15:33.17,Default,,0,0,0,,Thế chẳng phải anh ta mất mặt lắm à?
Dialogue: 0,0:15:33.20,0:15:36.47,Default,,0,0,0,,Đúng, theo lẽ thường thì ném vào mới đúng.
Dialogue: 0,0:15:37.30,0:15:39.14,Default,,0,0,0,,Tốt, tấn công nhanh!
Dialogue: 0,0:15:39.44,0:15:41.48,Default,,0,0,0,,Hay lắm, đây là cơ hội tốn để tấn công nhanh.
Dialogue: 0,0:15:41.64,0:15:42.34,Default,,0,0,0,,Miyagi.
Dialogue: 0,0:15:48.82,0:15:49.45,Default,,0,0,0,,Uozumi.
Dialogue: 0,0:15:51.79,0:15:53.15,Default,,0,0,0,,Này, Akagi.
Dialogue: 0,0:15:54.65,0:15:56.82,Default,,0,0,0,,Không ai kèm, không ai phòng thủ Uozumi cả.
Dialogue: 0,0:16:31.69,0:16:32.60,Default,,0,0,0,,Uozumi.
Dialogue: 0,0:16:32.63,0:16:34.43,Default,,0,0,0,,Sakugagi, có sao không?
Dialogue: 0,0:16:53.34,0:16:56.51,Default,,0,0,0,,Anh đừng hòng\Nlàm bậy dưới bảng rổ của Shohoku.
Dialogue: 0,0:16:57.82,0:16:59.85,Default,,0,0,0,,Cái thằng nhóc này!
Dialogue: 0,0:17:08.07,0:17:10.74,Default,,0,0,0,,Tên Đầu Đinh Đỏ đã ngăn cản Uozumi rồi.
Dialogue: 0,0:17:11.08,0:17:14.58,Default,,0,0,0,,- Cậu ta va thẳng vào Uozumi.\N- Sức bật và sức va đáng sợ quá.
Dialogue: 0,0:17:16.61,0:17:18.65,Default,,0,0,0,,Sakuragi giỏi quá.
Dialogue: 0,0:17:18.72,0:17:20.25,Default,,0,0,0,,Sức mạnh đáng kinh ngạc.
Dialogue: 0,0:17:24.42,0:17:27.02,Default,,0,0,0,,Khó, khó mà tin nổi!
Dialogue: 0,0:17:27.22,0:17:29.50,Default,,0,0,0,,Cậu ta cũng va làm\Nngười khổng lồ Uozumi đó ngã sao?
Dialogue: 0,0:17:29.82,0:17:33.56,Default,,0,0,0,,Làm tốt lắm Sakuragi.
Dialogue: 0,0:17:42.14,0:17:44.58,Default,,0,0,0,,[Nhưng vẫn phạm lỗi.]
Dialogue: 0,0:17:45.28,0:17:47.94,Default,,0,0,0,,Tại sao lại như vậy?
Dialogue: 0,0:17:47.97,0:17:49.41,Default,,0,0,0,,Tất nhiên rồi.
Dialogue: 0,0:17:53.55,0:17:54.89,Default,,0,0,0,,[Sakuragi Hanamichi,]
Dialogue: 0,0:17:57.27,0:17:59.94,Default,,0,0,0,,[khoảnh khắc ban nãy, tốc độ xông thẳng\Nđến dưới bảng rổ trong chớp mắt,]
Dialogue: 0,0:18:00.91,0:18:03.81,Default,,0,0,0,,[thêm bức bật để đối kháng Uozumi 202cm,]
Dialogue: 0,0:18:05.42,0:18:07.72,Default,,0,0,0,,[và sự nhanh nhẹn tiềm tàng trong cơ thể\Nphát ra cùng một lúc]
Dialogue: 0,0:18:13.76,0:18:19.66,Default,,0,0,0,,[đã chèn ép được lực tay khi úp rổ\Nvà sự can đảm đối mặt với người khổng lồ,]
Dialogue: 0,0:18:27.64,0:18:29.11,Default,,0,0,0,,[cậu ta có tố chất không giống người thường.]
Dialogue: 0,0:18:29.47,0:18:30.44,Default,,0,0,0,,Phạt hai quả.
Dialogue: 0,0:18:34.55,0:18:37.45,Default,,0,0,0,,Thả lỏng, Uozumi, không sao đâu.
Dialogue: 0,0:18:48.59,0:18:49.99,Default,,0,0,0,,Quả thứ hai không vào.
Dialogue: 0,0:19:00.67,0:19:03.27,Default,,0,0,0,,Đẹp lắm Sendoh, quả bóng này đẹp lắm.
Dialogue: 0,0:19:03.84,0:19:05.91,Default,,0,0,0,,Cậu đang làm cái giống gì vậy Akagi?
Dialogue: 0,0:19:09.05,0:19:09.76,Default,,0,0,0,,Bóng áo đỏ.
Dialogue: 0,0:19:09.87,0:19:11.51,Default,,0,0,0,,Cứ tiếp tục như vậy...
Dialogue: 0,0:19:16.64,0:19:18.10,Default,,0,0,0,,Rốt cuộc cậu đang làm gì vậy?
Dialogue: 0,0:19:18.92,0:19:19.75,Default,,0,0,0,,Mitchi.
Dialogue: 0,0:19:20.75,0:19:23.55,Default,,0,0,0,,Tại sao cậu lại để Sendoh\Nném vào một quả nhẹ nhàng như vậy hả?
Dialogue: 0,0:19:25.55,0:19:28.32,Default,,0,0,0,,Trận đấu này rất quan trọng,\Nliên quan đến giải đấu toàn quốc đấy,
Dialogue: 0,0:19:29.22,0:19:30.78,Default,,0,0,0,,cậu hiểu không?
Dialogue: 0,0:19:31.30,0:19:32.37,Default,,0,0,0,,Mitsui.
Dialogue: 0,0:19:38.17,0:19:39.93,Default,,0,0,0,,Chúng ta không có cơ hội thứ hai đâu.
Dialogue: 0,0:19:41.87,0:19:42.73,Default,,0,0,0,,Tôi biết.
Dialogue: 0,0:19:49.87,0:19:52.08,Default,,0,0,0,,Shohoku hô tạm dừng.
Dialogue: 0,0:20:07.93,0:20:08.73,Default,,0,0,0,,Tạm dừng trận đấu.
Dialogue: 0,0:20:24.01,0:20:25.21,Default,,0,0,0,,[Akagi đã bị xuống phong độ,]
Dialogue: 0,0:20:27.41,0:20:29.08,Default,,0,0,0,,[huấn luyện viên Anzai không ở đây,]
Dialogue: 0,0:20:31.48,0:20:34.66,Default,,0,0,0,,[Shohoku đã gặp phải nguy cơ không ngờ đến.]
