Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:04.54,0:00:11.01,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:28.95,0:00:35.51,Default,,0,0,0,,♫ Ánh mặt trời chói rọi phía sau lưng,\Ntôi bước trên con đường này ♫
Dialogue: 0,0:00:35.72,0:00:41.82,Default,,0,0,0,,♫ Cũng như thường lệ, lại bị vỗ vai ♫
Dialogue: 0,0:00:42.53,0:00:48.80,Default,,0,0,0,,♫ Cậu là nữ thần của tôi, không có lý do gì cả ♫
Dialogue: 0,0:00:49.13,0:00:54.33,Default,,0,0,0,,♫ Nhưng lại chưa từng khoác lấy tay tôi ♫
Dialogue: 0,0:00:54.57,0:01:00.91,Default,,0,0,0,,♫ Không biết từ lúc nào,\Nánh mắt đã không thể rời đi ♫
Dialogue: 0,0:01:01.31,0:01:07.41,Default,,0,0,0,,♫ Không buông ra, không do dự,\Nđiên cuồng vì cậu ♫
Dialogue: 0,0:01:07.85,0:01:14.69,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:01:14.93,0:01:21.26,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:01:21.47,0:01:28.57,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm tiến lên một bước ♫
Dialogue: 0,0:01:28.77,0:01:36.20,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:01:47.38,0:01:50.81,Default,,0,0,0,,[Trong bảng đầu của tuần chung kết\Ncuộc thi các trường cấp ba trên toàn quốc,]
Dialogue: 0,0:01:51.73,0:01:56.36,Default,,0,0,0,,[với đội vô địch giữ vững suốt 16 năm\Ntrong cuộc thi đấu các trường cấp ba,]
Dialogue: 0,0:01:56.36,0:01:59.76,Default,,0,0,0,,[cuộc thi giữa trường cấp ba trực thuộc Đại\Nhọc Kainan và Shohoku chính thức bắt đầu.]
Dialogue: 0,0:02:00.63,0:02:02.03,Default,,0,0,0,,Bắt tốt lắm!
Dialogue: 0,0:02:06.13,0:02:08.39,Default,,0,0,0,,Đừng quên vai trò của cậu!
Dialogue: 0,0:02:09.06,0:02:11.46,Default,,0,0,0,,Đến đây! Tôi giành cho cậu xem!
Dialogue: 0,0:02:11.93,0:02:15.49,Default,,0,0,0,,[Không được để bị đánh lừa bởi\Nsức bật cao và kĩ thuật cướp bóng của cậu ta.]
Dialogue: 0,0:02:16.01,0:02:17.63,Default,,0,0,0,,[Mặc kệ năng lực thể thao của cậu ta\Ngiỏi thế nào]
Dialogue: 0,0:02:17.63,0:02:20.03,Default,,0,0,0,,[thì cũng chỉ mới học bóng rổ\Nchưa đầy ba tháng mà thôi.]
Dialogue: 0,0:02:20.68,0:02:21.56,Default,,0,0,0,,[Cậu ta chính là một người ngoài ngành!]
Dialogue: 0,0:02:22.18,0:02:23.91,Default,,0,0,0,,Đến đây nào, Sakuragi!
Dialogue: 0,0:02:28.72,0:02:33.92,Default,,0,0,0,,[Nửa trận đầu, huấn luyện viên đắc lực Takato\Nđã nhìn rõ mọi điểm yếu của Sakuragi,]
Dialogue: 0,0:02:34.34,0:02:35.97,Default,,0,0,0,,[khiến cho Shohoku rơi vào nguy hiểm.]
Dialogue: 0,0:02:37.13,0:02:40.34,Default,,0,0,0,,[Nhưng với ý chí chiến đấu\Nsục sôi của Rukawa và Akagi,]
Dialogue: 0,0:02:40.37,0:02:42.60,Default,,0,0,0,,[Shohoku đang dần bắt kịp đối kịp.]
Dialogue: 0,0:02:46.63,0:02:48.48,Default,,0,0,0,,[Tuy nhiên, ngay trong lúc thuận lợi nhất,]
Dialogue: 0,0:02:54.23,0:02:58.89,Default,,0,0,0,,[vì trụ cột của cả đội - Akagi chấn thương chân,\NShohoku lại rơi vào nguy hiểm một lần nữa.]
Dialogue: 0,0:02:59.68,0:03:01.94,Default,,0,0,0,,Không chừng anh đã bị\Nchấn thương phần xương rồi đấy!
Dialogue: 0,0:03:02.23,0:03:04.06,Default,,0,0,0,,Mặc kệ đi! Mau bó lại giúp tôi.
Dialogue: 0,0:03:05.68,0:03:07.27,Default,,0,0,0,,Gãy xương cũng được,
Dialogue: 0,0:03:07.30,0:03:09.03,Default,,0,0,0,,không đi được nữa cũng được,
Dialogue: 0,0:03:09.43,0:03:11.33,Default,,0,0,0,,đây là cơ hội khó khăn lắm tôi mới có được!
Dialogue: 0,0:03:12.41,0:03:16.22,Default,,0,0,0,,[Sự quyết tâm giành chiến thắng\Ndù đang bị chấn thương của Akagi]
Dialogue: 0,0:03:16.33,0:03:18.45,Default,,0,0,0,,[đã khiến cho Hanamichi cảm động.]
Dialogue: 0,0:03:21.15,0:03:23.62,Default,,0,0,0,,Tinh Tinh Bự chắc chắn sẽ quay trở lại.
Dialogue: 0,0:03:24.35,0:03:28.45,Default,,0,0,0,,Hanamichi thề rằng sẽ cố gắng\Nhết sức phòng thủ dưới khung rổ.
Dialogue: 0,0:03:29.28,0:03:31.81,Default,,0,0,0,,Hãy để tôi thay thế\Nvị trí còn trống của Akagi!
Dialogue: 0,0:03:33.95,0:03:42.85,Default,,0,0,0,,[Em trai King Kong]
Dialogue: 0,0:03:36.59,0:03:38.98,Default,,0,0,0,,[Em trai King Kong.]
Dialogue: 0,0:03:58.15,0:03:59.67,Default,,0,0,0,,Đến nào!
Dialogue: 0,0:04:00.61,0:04:02.80,Default,,0,0,0,,[Tôi sẽ người thay thế cho vị trí của Akagi.]
Dialogue: 0,0:04:08.44,0:04:10.28,Default,,0,0,0,,Xem đây!
Dialogue: 0,0:04:10.39,0:04:13.89,Default,,0,0,0,,Tuyệt chiêu của Akagi, tuyệt chiêu đập ruồi!
Dialogue: 0,0:04:17.50,0:04:18.62,Default,,0,0,0,,Tuyệt vời!
Dialogue: 0,0:04:25.31,0:04:27.39,Default,,0,0,0,,Chỉ dựa vào một mình mày là không đủ đâu.
Dialogue: 0,0:04:28.06,0:04:28.93,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:04:30.45,0:04:33.41,Default,,0,0,0,,Tốt lắm!
Dialogue: 0,0:04:52.74,0:04:54.90,Default,,0,0,0,,Thằng này!
Dialogue: 0,0:04:55.03,0:04:57.06,Default,,0,0,0,,Bốn người của Kainan\Nđều tập trung dưới khung rổ!
Dialogue: 0,0:04:59.13,0:05:01.47,Default,,0,0,0,,Tên trung niên kia,\Ntôi sẽ không để anh ra tay đâu!
Dialogue: 0,0:05:18.13,0:05:19.49,Default,,0,0,0,,Chuyền tốt lắm!
Dialogue: 0,0:05:20.43,0:05:22.16,Default,,0,0,0,,Anh mơ đi!
Dialogue: 0,0:05:23.70,0:05:24.61,Default,,0,0,0,,Tốt!
Dialogue: 0,0:05:43.62,0:05:46.47,Default,,0,0,0,,Nhìn tôi đây, Shohoku!
Dialogue: 0,0:06:01.29,0:06:02.44,Default,,0,0,0,,Ồ hô!
Dialogue: 0,0:06:02.71,0:06:05.54,Default,,0,0,0,,Tôi là em trai King Kong dưới khung rổ!
Dialogue: 0,0:06:10.71,0:06:12.11,Default,,0,0,0,,Tên Khỉ Đầu Đỏ!
Dialogue: 0,0:06:32.96,0:06:36.21,Default,,0,0,0,,Tiếng reo lớn quá, không lẽ...
Dialogue: 0,0:06:41.41,0:06:43.12,Default,,0,0,0,,Anh à, chị Ayako!
Dialogue: 0,0:06:43.38,0:06:46.94,Default,,0,0,0,,Haruko, tiếng reo hò là sao vậy?
Dialogue: 0,0:06:52.58,0:06:56.18,Default,,0,0,0,,Giỏi lắm! Sakuragi giỏi lắm!
Dialogue: 0,0:07:01.38,0:07:02.48,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:07:08.99,0:07:12.92,Default,,0,0,0,,Thêm một quả nào!
Dialogue: 0,0:07:13.20,0:07:17.00,Default,,0,0,0,,Làm tốt lắm, cậu tóc đỏ!
Dialogue: 0,0:07:20.69,0:07:24.12,Default,,0,0,0,,Khỉ Hoang, bây giờ thì cậu biết\Nsự lợi hại của thiên tài này rồi chứ?
Dialogue: 0,0:07:25.06,0:07:34.45,Default,,0,0,0,,Khốn kiếp! Cảm giác bị tên này chặn\Ncòn khó chịu hơn người khác chặn!
Dialogue: 0,0:07:43.32,0:07:44.94,Default,,0,0,0,,Bóng bật bảng!
Dialogue: 0,0:07:47.80,0:07:51.03,Default,,0,0,0,,Người có thể kiểm soát được bóng bật bảng\Nthì có thể kiếm soát được trận đấu.
Dialogue: 0,0:07:53.15,0:07:55.98,Default,,0,0,0,,Sakuragi, cậu nghe kỹ đây,\Ncó thể kiểm soát được đường bóng hay không
Dialogue: 0,0:07:56.93,0:07:59.26,Default,,0,0,0,,hoàn toàn dựa vào\Ntư thế phòng thủ dưới khung rổ.
Dialogue: 0,0:08:07.00,0:08:08.85,Default,,0,0,0,,Không đúng!
Dialogue: 0,0:08:12.18,0:08:14.05,Default,,0,0,0,,Phải dùng cả cơ thể để chặn,
Dialogue: 0,0:08:22.93,0:08:24.78,Default,,0,0,0,,đây chính là cách có thể chen vào được.
Dialogue: 0,0:08:44.11,0:08:45.94,Default,,0,0,0,,Sakuragi, cậu nghe kỹ đây.
Dialogue: 0,0:08:46.44,0:08:50.35,Default,,0,0,0,,Khi giành được bóng,\Nhai tay phải cầm thật chặt quả bóng.
Dialogue: 0,0:08:51.73,0:08:54.88,Default,,0,0,0,,Để lộ vẻ mặt dù chết cũng sẽ\Nkhông buông bóng để dọa đối thủ.
Dialogue: 0,0:08:58.55,0:08:59.66,Default,,0,0,0,,Đồ ngốc!
Dialogue: 0,0:08:59.68,0:09:04.03,Default,,0,0,0,,Hễ lấy được bóng là lơ là ngay\Nnhư cậu là cách nguy hiểm nhất.
Dialogue: 0,0:09:04.65,0:09:07.88,Default,,0,0,0,,Đừng quên sẽ luôn có người\Nđợi lúc cậu tiếp đất sẽ giành bóng ngay.
Dialogue: 0,0:09:09.66,0:09:11.56,Default,,0,0,0,,Dưới khung rổ giống như chiến trường vậy,
Dialogue: 0,0:09:12.20,0:09:15.14,Default,,0,0,0,,cậu nhất định phải giữ\Nbóng của mình cho thật chặt!
Dialogue: 0,0:09:27.10,0:09:30.70,Default,,0,0,0,,Tốt, giành được bóng rồi!
Dialogue: 0,0:09:31.43,0:09:32.64,Default,,0,0,0,,Sakuragi, giành tốt lắm!
Dialogue: 0,0:09:33.28,0:09:35.79,Default,,0,0,0,,Nhưng mà thay chỗ cho Akagi là được,
Dialogue: 0,0:09:35.81,0:09:38.23,Default,,0,0,0,,không cần phải học cả cách kêu của Akagi đâu.
Dialogue: 0,0:09:38.23,0:09:39.99,Default,,0,0,0,,Đâu cần phải kêu "hô hô" như Tinh Tinh.
Dialogue: 0,0:09:40.45,0:09:42.87,Default,,0,0,0,,Em biết rồi! Cầm lấy đi, anh Bốn Mắt!
Dialogue: 0,0:09:45.12,0:09:47.39,Default,,0,0,0,,[Ít ra mình có thể ngăn việc mất điểm\Ncho đến khi Tinh Tinh Bự quay trở lại.]
Dialogue: 0,0:09:47.42,0:09:50.34,Default,,0,0,0,,[Mình sẽ dốc toàn sức của mình!]
Dialogue: 0,0:10:04.29,0:10:06.75,Default,,0,0,0,,[Những gì mình có thể làm được.]
Dialogue: 0,0:10:08.08,0:10:11.25,Default,,0,0,0,,[Mình sẽ thử hết,\Ncho đến khi anh ấy quay lại mới thôi.]
Dialogue: 0,0:10:12.49,0:10:13.43,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:10:17.26,0:10:20.60,Default,,0,0,0,,Hình như Sakuragi trưởng thành hơn rồi.
Dialogue: 0,0:10:27.04,0:10:28.65,Default,,0,0,0,,[Cách dẫn bóng cơ bản,]
Dialogue: 0,0:10:30.01,0:10:31.67,Default,,0,0,0,,[những đường bóng đơn giản,]
Dialogue: 0,0:10:32.15,0:10:33.62,Default,,0,0,0,,[đưa bóng vào rổ,]
Dialogue: 0,0:10:34.26,0:10:35.27,Default,,0,0,0,,[giành cú bắt bóng bật bảng,]
Dialogue: 0,0:10:36.76,0:10:39.35,Default,,0,0,0,,[đấy là những vũ khí mình nắm trong tay.]
Dialogue: 0,0:10:39.86,0:10:41.80,Default,,0,0,0,,[Dù rất ít ỏi,]
Dialogue: 0,0:10:42.28,0:10:44.27,Default,,0,0,0,,[nhưng vẫn còn một điều...]
Dialogue: 0,0:10:46.14,0:10:48.93,Default,,0,0,0,,Đó là mình là thiên tài úp rổ!
Dialogue: 0,0:10:49.27,0:10:53.02,Default,,0,0,0,,Đấy mới là vũ khí lợi hại nhất\Ncủa thiên tài Sakuragi đây!
Dialogue: 0,0:10:55.72,0:10:58.59,Default,,0,0,0,,Tốt! Vào thêm một quả nữa đi!
Dialogue: 0,0:11:04.92,0:11:06.88,Default,,0,0,0,,Còn tự nhận là em trai King Kong.
Dialogue: 0,0:11:07.86,0:11:10.19,Default,,0,0,0,,Cậu ấy cũng đáng yêu đấy, đàn anh.
Dialogue: 0,0:11:16.64,0:11:19.12,Default,,0,0,0,,[Lúc này đây, ở một sân thi đấu khác,]
Dialogue: 0,0:11:26.74,0:11:30.24,Default,,0,0,0,,[với thành tích vượt 100 điểm,\NRyonan đã đánh bại Takesato.]
Dialogue: 0,0:11:32.79,0:11:37.37,Default,,0,0,0,,[Uozumi ghi được 35 điểm,\N17 cú bắt bóng bật bảng, 4 cú cản bóng,]
Dialogue: 0,0:11:37.37,0:11:39.00,Default,,0,0,0,,[Uozumi đã với để lại điểm số đáng kinh ngạc.]
Dialogue: 0,0:11:39.64,0:11:41.32,Default,,0,0,0,,[Không chỉ vì vẻ bề ngoài của cậu ấy,]
Dialogue: 0,0:11:41.32,0:11:44.97,Default,,0,0,0,,[cũng bởi sự nhanh nhạy của cậu ấy\Nmà có được danh hiệu Quái Vật.]
Dialogue: 0,0:11:48.32,0:11:49.14,Default,,0,0,0,,[Đồng thời,]
Dialogue: 0,0:11:49.16,0:11:52.51,Default,,0,0,0,,[vị cầu thủ đa tài được đánh giá\Ncao hơn Uozumi về vài phương diện,]
Dialogue: 0,0:11:52.53,0:11:53.34,Default,,0,0,0,,[Sendoh,]
Dialogue: 0,0:11:53.77,0:11:58.07,Default,,0,0,0,,[rõ ràng trong trận đấu này,\Ncậu chưa phát huy hết năng lực của mình.]
Dialogue: 0,0:12:01.64,0:12:04.98,Default,,0,0,0,,Hay lắm Ryonan! Đánh bại Kainan đi!
Dialogue: 0,0:12:08.77,0:12:10.37,Default,,0,0,0,,[Dù sao đi nữa, trước mắt,]
Dialogue: 0,0:12:10.37,0:12:13.96,Default,,0,0,0,,[Ryonan cũng là đội có thể\Ngiành được giải vô địch toàn quốc.]
Dialogue: 0,0:12:35.44,0:12:36.57,Default,,0,0,0,,Bên đó!
Dialogue: 0,0:12:37.98,0:12:38.67,Default,,0,0,0,,Tốt!
Dialogue: 0,0:12:48.27,0:12:50.81,Default,,0,0,0,,Bây giờ Shohoku thiếu mất Akagi,
Dialogue: 0,0:12:50.83,0:12:52.72,Default,,0,0,0,,ai sẽ là người lãnh đạo đây?
Dialogue: 0,0:12:53.29,0:12:58.53,Default,,0,0,0,,Đội phó Kogure trông không\Ngiống người có thể lãnh đạo.
Dialogue: 0,0:12:59.24,0:13:01.37,Default,,0,0,0,,Mitsui bị kèm quá chặt,
Dialogue: 0,0:13:01.39,0:13:04.29,Default,,0,0,0,,hoàn toàn không có cơ hội\Nphát huy như lúc đấu với Shoyo.
Dialogue: 0,0:13:05.77,0:13:10.60,Default,,0,0,0,,Còn hậu về dẫn bóng Miyagi\Nbị cầu thủ số một Maki kèm chặt,
Dialogue: 0,0:13:10.60,0:13:12.29,Default,,0,0,0,,cũng không có cơ hội ra tay.
Dialogue: 0,0:13:14.15,0:13:17.89,Default,,0,0,0,,Cứ tiếp tục như vậy,\NKainan sẽ hoàn toàn chiếm ưu thế.
Dialogue: 0,0:13:25.24,0:13:26.22,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:13:27.59,0:13:29.33,Default,,0,0,0,,Không ổn rồi, đội Kainan đúng như lời đồn.
Dialogue: 0,0:13:29.33,0:13:32.24,Default,,0,0,0,,Phòng thủ trở lại nhanh như vậy,\Nhoàn toàn không có cách để tấn công.
Dialogue: 0,0:13:43.48,0:13:44.42,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:13:46.68,0:13:47.68,Default,,0,0,0,,Muốn ném bóng sao?
Dialogue: 0,0:13:49.47,0:13:50.56,Default,,0,0,0,,Là động tác giả.
Dialogue: 0,0:13:51.23,0:13:52.75,Default,,0,0,0,,Không phải, là ném thật!
Dialogue: 0,0:13:56.95,0:13:59.01,Default,,0,0,0,,Hay lắm! Vào rồi!
Dialogue: 0,0:13:59.25,0:14:01.72,Default,,0,0,0,,Hay lắm!
Dialogue: 0,0:14:03.29,0:14:05.95,Default,,0,0,0,,Vừa nãy không phải là lúc ném bóng mới phải.
Dialogue: 0,0:14:07.18,0:14:10.03,Default,,0,0,0,,Nếu tấn công không được thì nên quay trở về,
Dialogue: 0,0:14:10.05,0:14:12.02,Default,,0,0,0,,để tạo một cơ hội khác mới đúng.
Dialogue: 0,0:14:12.28,0:14:13.87,Default,,0,0,0,,Nếu cú vừa nãy mà không vào,
Dialogue: 0,0:14:13.87,0:14:16.10,Default,,0,0,0,,nhất định sẽ bị đối phương\Ntấn công ngược lại.
Dialogue: 0,0:14:17.22,0:14:20.51,Default,,0,0,0,,Đội Kainan sẽ không bỏ qua\Nmột lỗi sai nhỏ như vậy.
Dialogue: 0,0:14:21.43,0:14:25.96,Default,,0,0,0,,Rukawa! Rukawa! Rukawa! Rukawa! Rukawa!
Dialogue: 0,0:14:26.18,0:14:32.24,Default,,0,0,0,,Là vì Nobunaga tin chắc\Nđó là một động tác giả.
Dialogue: 0,0:14:32.27,0:14:33.40,Default,,0,0,0,,Thì ra là vậy.
Dialogue: 0,0:14:36.01,0:14:37.23,Default,,0,0,0,,[Rukawa.]
Dialogue: 0,0:14:39.08,0:14:42.14,Default,,0,0,0,,[Dù cậu ta là một người mới,\Nnhưng cậu ta đúng là rất xuất sắc.]
Dialogue: 0,0:14:42.38,0:14:45.83,Default,,0,0,0,,[Nhưng cách chơi của cậu ta quá tự cao,\Nđây là một điểm yếu của cậu ta.]
Dialogue: 0,0:14:47.65,0:14:50.35,Default,,0,0,0,,[Không ai có thể ngờ được,]
Dialogue: 0,0:14:50.50,0:14:54.37,Default,,0,0,0,,[trong tình trạng vắng mặt Akagi, Shohoku\Nbắt đầu triển khai tấn công để đuổi kịp Kainan.]
Dialogue: 0,0:15:01.12,0:15:03.32,Default,,0,0,0,,[Mình tuyệt đối không để thua cuộc,]
Dialogue: 0,0:15:03.45,0:15:05.45,Default,,0,0,0,,[cho dù đối thủ là Kainan cũng vậy.]
Dialogue: 0,0:15:08.14,0:15:10.58,Default,,0,0,0,,Chúng ta phải kết thúc nửa trận đầu\Nvới số điểm hơn họ mười điểm.
Dialogue: 0,0:15:11.15,0:15:12.05,Default,,0,0,0,,Được.
Dialogue: 0,0:15:15.02,0:15:17.11,Default,,0,0,0,,[Điểm yếu của Rukawa]
Dialogue: 0,0:15:20.07,0:15:24.40,Default,,0,0,0,,[là quá tự cao và chơi cá nhân.]
Dialogue: 0,0:15:25.76,0:15:28.94,Default,,0,0,0,,[Mình không muốn thua,\Ncòn thiếu chín điểm nữa.]
Dialogue: 0,0:15:30.69,0:15:32.85,Default,,0,0,0,,Một điểm cũng không được thua!
Dialogue: 0,0:15:33.30,0:15:34.79,Default,,0,0,0,,Trước khi Tinh Tinh Bự được thả về,
Dialogue: 0,0:15:34.89,0:15:37.65,Default,,0,0,0,,cứ để thiên tài này thủ ở đây!
Dialogue: 0,0:15:41.49,0:15:45.64,Default,,0,0,0,,Hanamichi, cậu mạnh miệng thật đấy!\NNgười đáng lo nhất là cậu đó!
Dialogue: 0,0:16:03.94,0:16:05.45,Default,,0,0,0,,Cậu ta phạm lỗi!
Dialogue: 0,0:16:07.77,0:16:09.01,Default,,0,0,0,,Đau quá!
Dialogue: 0,0:16:09.16,0:16:12.09,Default,,0,0,0,,Trọng tài không thổi còi, tiếp tục!
Dialogue: 0,0:16:16.42,0:16:20.60,Default,,0,0,0,,Rukawa, mày dám lấy tao làm vật đỡ!\NĐợi đấy!
Dialogue: 0,0:16:20.75,0:16:24.26,Default,,0,0,0,,Chết tiệt, vừa nãy suýt nữa là có cơ hội!
Dialogue: 0,0:16:26.40,0:16:28.75,Default,,0,0,0,,Tao sẽ không để thua mày đâu!
Dialogue: 0,0:16:31.31,0:16:33.16,Default,,0,0,0,,[Chỉ kém chín điểm thôi.]
Dialogue: 0,0:16:33.43,0:16:34.73,Default,,0,0,0,,Mito, kèm chặt Mitsui!
Dialogue: 0,0:16:41.71,0:16:45.65,Default,,0,0,0,,[Chạy về nhanh như vậy, họ là người thật sao?]
Dialogue: 0,0:16:46.15,0:16:48.38,Default,,0,0,0,,[Là người như thế nào?]
Dialogue: 0,0:16:53.03,0:16:56.90,Default,,0,0,0,,Về sức chạy, chúng tôi không thua kém ai cả.
Dialogue: 0,0:16:58.53,0:17:01.60,Default,,0,0,0,,[Tôi ghết nhất là thái độ này của ông, ông già.]
Dialogue: 0,0:17:05.25,0:17:10.29,Default,,0,0,0,,[Chết tiệt, đám Kainan chạy quá giỏi,\Nchạy về phòng thủ nhanh như vậy.]
Dialogue: 0,0:17:10.78,0:17:13.22,Default,,0,0,0,,Không được, lần tấn công này lại thất bại.
Dialogue: 0,0:17:14.28,0:17:18.48,Default,,0,0,0,,Tốc độ chuyển đổi từ tấn công\Nsang phòng thủ của Kainan quá nhanh!
Dialogue: 0,0:17:19.45,0:17:23.05,Default,,0,0,0,,Không chỉ vậy, động tác của\Nmỗi một người đều không hề dư thừa.
Dialogue: 0,0:17:24.19,0:17:27.82,Default,,0,0,0,,Sự tập luyện cơ bản của Kainan rất bài bản,
Dialogue: 0,0:17:30.25,0:17:32.56,Default,,0,0,0,,không hổ danh là đội vô địch.
Dialogue: 0,0:17:33.24,0:17:34.33,Default,,0,0,0,,Là vậy sao?
Dialogue: 0,0:17:37.20,0:17:38.56,Default,,0,0,0,,[Rukawa.]
Dialogue: 0,0:17:39.03,0:17:41.26,Default,,0,0,0,,[Cách chơi cá nhân này của cậu ta]
Dialogue: 0,0:17:41.59,0:17:43.86,Default,,0,0,0,,[chỉ càng lúc\Ncàng kéo xa khoảng cách của hai đội.]
Dialogue: 0,0:17:50.92,0:17:52.77,Default,,0,0,0,,Chuyền bóng cho tao.
Dialogue: 0,0:17:52.80,0:17:59.07,Default,,0,0,0,,Chuyền bóng cho tao, chuyền bóng cho tao!
Dialogue: 0,0:18:19.10,0:18:20.07,Default,,0,0,0,,Chết rồi!
Dialogue: 0,0:18:26.19,0:18:27.68,Default,,0,0,0,,Vào rồi!
Dialogue: 0,0:18:29.37,0:18:31.40,Default,,0,0,0,,Rukawa! Thằng này!
Dialogue: 0,0:18:43.41,0:18:46.93,Default,,0,0,0,,Rukawa! Rukawa! Rukawa!
Dialogue: 0,0:18:47.94,0:18:50.57,Default,,0,0,0,,Vừa nãy cũng là cách chơi cá nhân sao?
Dialogue: 0,0:19:02.53,0:19:03.54,Default,,0,0,0,,Gì vậy?
Dialogue: 0,0:19:05.00,0:19:07.12,Default,,0,0,0,,Rukawa, cướp tốt lắm!
Dialogue: 0,0:19:11.20,0:19:12.57,Default,,0,0,0,,Là cú lừa sao?
Dialogue: 0,0:19:28.02,0:19:30.11,Default,,0,0,0,,Vào rồi!
Dialogue: 0,0:19:32.09,0:19:33.17,Default,,0,0,0,,Gì vậy?
Dialogue: 0,0:19:37.77,0:19:41.30,Default,,0,0,0,,Lợi hại quá! Số 11 giỏi quá!
Dialogue: 0,0:19:41.30,0:19:42.70,Default,,0,0,0,,Ngầu quá!
Dialogue: 0,0:19:51.32,0:19:54.68,Default,,0,0,0,,Còn thiếu năm điểm thôi,\Nlúc đầu kém hơn mười điểm đấy!
Dialogue: 0,0:19:54.79,0:19:56.86,Default,,0,0,0,,Chỉ trong thời gian ngắn đã rút ngắn\Nkhoảng cách, chỉ cách có năm điểm.
Dialogue: 0,0:19:57.36,0:20:02.09,Default,,0,0,0,,Rukawa! Rukawa! Mình yêu cậu!
Dialogue: 0,0:20:02.99,0:20:05.93,Default,,0,0,0,,Rukawa! Giỏi quá!
Dialogue: 0,0:20:11.09,0:20:13.86,Default,,0,0,0,,Tại sao lúc nào nó cũng được hoan hô thế!
Dialogue: 0,0:20:20.24,0:20:22.67,Default,,0,0,0,,Khốn nạn!
Dialogue: 0,0:20:32.66,0:20:34.71,Default,,0,0,0,,[Còn thiếu năm điểm nữa.]
Dialogue: 0,0:20:35.92,0:20:37.32,Default,,0,0,0,,[Vì Akagi đã rời sân,]
Dialogue: 0,0:20:37.36,0:20:40.29,Default,,0,0,0,,[mọi người ai cũng cho rằng\NKainan sẽ nắm chắc phần thắng.]
Dialogue: 0,0:20:41.31,0:20:45.11,Default,,0,0,0,,[Một mình Rukawa đã thay Shohoku\Nrút ngắn khoảng cách, chỉ còn kém năm điểm.]
Dialogue: 0,0:20:46.81,0:20:51.41,Default,,0,0,0,,[Hơn nữa,\Nsự phản công của Rukawa vẫn chưa kết thúc.]
Dialogue: 0,0:21:12.34,0:21:15.14,Default,,0,0,0,,♫ Trong giấc mơ nhếch nhác thảm hại ♫
Dialogue: 0,0:21:16.30,0:21:18.59,Default,,0,0,0,,♫ Tôi bỗng choàng tỉnh ♫
Dialogue: 0,0:21:20.19,0:21:24.31,Default,,0,0,0,,♫ Lại một buổi sớm với ánh nắng rực rỡ ♫
Dialogue: 0,0:21:27.85,0:21:34.00,Default,,0,0,0,,♫ Nghe bài hát mình thích ♫
Dialogue: 0,0:21:35.44,0:21:40.61,Default,,0,0,0,,♫ Mặc chiếc áo sơ mi sạch sẽ ♫
Dialogue: 0,0:21:42.14,0:21:44.69,Default,,0,0,0,,♫ Đêm qua ♫
Dialogue: 0,0:21:45.44,0:21:48.45,Default,,0,0,0,,♫ Có người nói với tôi với vẻ mệt mỏi rằng ♫
Dialogue: 0,0:21:49.54,0:21:51.11,Default,,0,0,0,,♫ Muốn tìm kiếm kích thích ♫
Dialogue: 0,0:21:51.11,0:21:52.82,Default,,0,0,0,,♫ Muốn đột phá thực tại ♫
Dialogue: 0,0:21:53.06,0:21:56.19,Default,,0,0,0,,♫ Đừng lún sâu như thế nữa ♫
Dialogue: 0,0:21:56.85,0:22:01.12,Default,,0,0,0,,♫ Hãy nắm giữ khoảnh khắc tỏa sáng ♫
Dialogue: 0,0:22:01.12,0:22:04.55,Default,,0,0,0,,♫ Tôi phải sống đúng với bản thân mình ♫
Dialogue: 0,0:22:05.10,0:22:08.80,Default,,0,0,0,,♫ Có lẽ sẽ hối hận, có lẽ không hoàn hảo ♫
Dialogue: 0,0:22:09.22,0:22:13.15,Default,,0,0,0,,♫ Nhưng đã không còn cô đơn nữa wow ♫
Dialogue: 0,0:22:13.55,0:22:19.53,Default,,0,0,0,,♫ Giọt nước mắt tràn mi\Nlại là thứ đẹp đẽ nhất ♫
Dialogue: 0,0:22:20.40,0:22:24.22,Default,,0,0,0,,♫ Tôi lại bước lên hành trình vô tận ♫
Dialogue: 0,0:22:24.22,0:22:28.20,Default,,0,0,0,,♫ Đi thẳng về phía trước,\Nkhông bao giờ lùi bước ♫
Dialogue: 0,0:22:36.31,0:22:37.66,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:39.30,0:22:41.30,Default,,0,0,0,,Tốt lắm Rukawa! Được lắm!
Dialogue: 0,0:22:41.30,0:22:43.03,Default,,0,0,0,,Có một thành viên như cậu thật tốt!
Dialogue: 0,0:22:43.16,0:22:45.75,Default,,0,0,0,,Lúc Akagi vắng mặt lại có\Nmột đội viên đáng tin cậy như vậy.
Dialogue: 0,0:22:45.92,0:22:47.92,Default,,0,0,0,,Đúng là việc không ngờ tới.
Dialogue: 0,0:22:47.99,0:22:50.21,Default,,0,0,0,,Rukawa, mày đừng quá ngông!
Dialogue: 0,0:22:50.31,0:22:51.56,Default,,0,0,0,,Vài chiêu trò đấy, tao cũng...
Dialogue: 0,0:22:52.42,0:22:53.58,Default,,0,0,0,,Đám người đó sao vậy?
Dialogue: 0,0:22:53.60,0:22:55.33,Default,,0,0,0,,Nhìn cho kỹ\Ntình hình xung quanh đi Sakuragi!
Dialogue: 0,0:22:55.38,0:22:57.31,Default,,0,0,0,,Không nhìn thấy!\NKhông được, sắp bị giành bóng rồi!
Dialogue: 0,0:22:57.99,0:22:58.87,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:22:59.77,0:23:00.67,Default,,0,0,0,,"Cao thủ bóng rổ!"
Dialogue: 0,0:23:01.22,0:23:03.36,Default,,0,0,0,,"Chàng trai kiểm soát trận thi đấu!"
Dialogue: 0,0:23:03.63,0:23:04.84,Default,,0,0,0,,Đừng bỏ qua đấy.
