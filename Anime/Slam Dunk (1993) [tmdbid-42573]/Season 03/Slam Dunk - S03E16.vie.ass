Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.83,0:00:20.66,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.80,0:00:24.47,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.82,0:00:30.09,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.36,0:00:36.56,Default,,0,0,0,,♫  Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.30,0:00:44.24,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.14,0:00:50.84,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.28,0:00:57.12,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.38,0:01:02.95,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.49,0:01:10.26,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:14.00,0:01:19.70,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:20.17,0:01:25.78,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.01,0:01:31.78,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:32.15,0:01:40.53,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:56.17,0:01:57.51,Default,,0,0,0,,[Vào ngày cuối cùng\Ntrong tuần chung kết của tỉnh,]
Dialogue: 0,0:01:58.01,0:02:00.94,Default,,0,0,0,,[trường cấp ba trực thuộc Đại học Kainan đã\Nđánh bại Takesato giữ chức vô địch suốt 17 năm,]
Dialogue: 0,0:02:01.21,0:02:04.55,Default,,0,0,0,,[đồng thời giành được tư cách tham gia\Ngiải đấu các trường cấp ba toàn quốc.]
Dialogue: 0,0:02:06.08,0:02:08.09,Default,,0,0,0,,[Trận đấu thứ hai được nhiều người mong đợi,]
Dialogue: 0,0:02:08.11,0:02:09.88,Default,,0,0,0,,[là trận đối đầu giữa Shohoku và Ryonan.]
Dialogue: 0,0:02:09.98,0:02:12.92,Default,,0,0,0,,[Cuộc thi đấu giành chiếc vé\Ncuối cùng đã bắt đầu.]
Dialogue: 0,0:02:15.26,0:02:18.96,Default,,0,0,0,,[Đối đầu với át chủ bài Sendoh của Ryonan\Nđã làm khơi dậy ý chí chiến đấu của Rukawa.]
Dialogue: 0,0:02:33.81,0:02:37.24,Default,,0,0,0,,[Mặt khác, Hanamichi nhảy cao\Nvà chặn được cú ném bóng của Fukuda.]
Dialogue: 0,0:02:40.28,0:02:41.76,Default,,0,0,0,,Hay quá!
Dialogue: 0,0:02:44.15,0:02:46.10,Default,,0,0,0,,[Lần phạm lỗi này khiến cho Shohoku\Nthua hai điểm trước Ryonan.]
Dialogue: 0,0:02:46.24,0:02:48.48,Default,,0,0,0,,[Nhưng biểu hiện xuất sắc\Nngoài sức tưởng tượng của Sakuragi]
Dialogue: 0,0:02:48.71,0:02:51.95,Default,,0,0,0,,[đã khiến cho cả sân bóng hết sức kinh ngạc.]
Dialogue: 0,0:02:54.31,0:03:03.25,Default,,0,0,0,,[Đấng cứu thế!? Sakuragi Hanamichi]
Dialogue: 0,0:02:56.29,0:02:59.57,Default,,0,0,0,,[Đấng cứu thế!? Sakuragi Hanamichi.]
Dialogue: 0,0:03:30.48,0:03:31.62,Default,,0,0,0,,Anh sẽ kèm tôi sao?
Dialogue: 0,0:03:33.30,0:03:37.78,Default,,0,0,0,,Fukuda, anh có cách để\Nngăn được thiên tài này không?
Dialogue: 0,0:03:43.53,0:03:46.14,Default,,0,0,0,,[Năng lực bắt bóng bật bảng\Ncủa Sakuragi cần phải chú ý,]
Dialogue: 0,0:03:46.30,0:03:48.11,Default,,0,0,0,,[nhưng năng lực ghi điểm\Ncủa cậu ta gần như bằng không.]
Dialogue: 0,0:03:49.31,0:03:51.21,Default,,0,0,0,,[Cho người có năng lực phòng thủ\Nkém nhất như Fukuda kèm cậu ta]
Dialogue: 0,0:03:51.58,0:03:53.04,Default,,0,0,0,,[chắc sẽ không có vấn đề gì.]
Dialogue: 0,0:03:54.65,0:03:56.81,Default,,0,0,0,,Tôi cho anh một lời khuyên.
Dialogue: 0,0:03:57.65,0:04:01.75,Default,,0,0,0,,Tốt nhất anh nên kêu tên Sendoh hoặc\NThủ Lĩnh Người Vượn đó kèm tôi sẽ tốt hơn.
Dialogue: 0,0:04:04.16,0:04:04.96,Default,,0,0,0,,Nhận bóng!
Dialogue: 0,0:04:09.35,0:04:12.20,Default,,0,0,0,,- Sakuragi!\N- Cậu nhìn đi đâu vậy hả?
Dialogue: 0,0:04:12.20,0:04:12.87,Default,,0,0,0,,Đau quá! Đau quá!
Dialogue: 0,0:04:12.87,0:04:16.83,Default,,0,0,0,,- Sakuragi Hanamichi, cậu tập trung cho tôi!\N- Sao lại đánh em?
Dialogue: 0,0:04:16.83,0:04:20.50,Default,,0,0,0,,Gì đây? Thì ra thằng nhóc này\Nvẫn giống như trước, không hề thay đổi gì cả.
Dialogue: 0,0:04:21.56,0:04:23.32,Default,,0,0,0,,Cậu đang làm gì vậy hả, đồ ngốc!
Dialogue: 0,0:04:23.83,0:04:25.17,Default,,0,0,0,,Này, cậu sao vậy?
Dialogue: 0,0:04:32.60,0:04:33.83,Default,,0,0,0,,Cậu vẫn giống hệt lúc trước.
Dialogue: 0,0:04:37.64,0:04:38.81,Default,,0,0,0,,[Sendoh!]
Dialogue: 0,0:04:43.54,0:04:46.65,Default,,0,0,0,,Nếu cậu muốn đánh bại tôi\Nthì phải luyện tập liều mạng vào.
Dialogue: 0,0:04:47.78,0:04:48.60,Default,,0,0,0,,[Sendoh!]
Dialogue: 0,0:04:58.04,0:05:00.34,Default,,0,0,0,,Đứng lại! Tên giả vờ giả vịt đó!
Dialogue: 0,0:05:00.47,0:05:03.97,Default,,0,0,0,,Người dẫn dắt cả đội Shohoku, Sakuragi này\Nsẽ không mắc bẫy thêm lần nữa đâu!
Dialogue: 0,0:05:04.11,0:05:07.33,Default,,0,0,0,,Đúng vậy, chính là thế!\NSakuragi, nói tốt lắm!
Dialogue: 0,0:05:07.52,0:05:10.73,Default,,0,0,0,,- Không được thua Ryonan nữa!\N- Phòng thủ nào!
Dialogue: 0,0:05:11.59,0:05:14.80,Default,,0,0,0,,- Rõ ràng không phải đội bóng do cậu dẫn dắt.\N- Rõ ràng không phải đội bóng do cậu dẫn dắt.
Dialogue: 0,0:05:16.83,0:05:19.30,Default,,0,0,0,,Món nợ lần trước tôi chắc chắn\Nphải trả lại cho cậu.
Dialogue: 0,0:05:25.91,0:05:27.11,Default,,0,0,0,,Làm tốt lắm, Ryota!
Dialogue: 0,0:05:29.51,0:05:30.28,Default,,0,0,0,,Hanamichi!
Dialogue: 0,0:05:31.41,0:05:32.95,Default,,0,0,0,,Sakuragi, không ai kèm cậu cả!
Dialogue: 0,0:05:35.82,0:05:36.62,Default,,0,0,0,,Quá hời cho cậu ta rồi!
Dialogue: 0,0:05:36.88,0:05:39.62,Default,,0,0,0,,Cơ hội tốt đấy Hanamichi, mau úp rổ đi!
Dialogue: 0,0:05:39.65,0:05:40.72,Default,,0,0,0,,Sakuragi!
Dialogue: 0,0:05:43.82,0:05:44.47,Default,,0,0,0,,Gì vậy?
Dialogue: 0,0:05:55.90,0:05:57.14,Default,,0,0,0,,Vào rồi!
Dialogue: 0,0:05:57.67,0:05:59.53,Default,,0,0,0,,Làm tốt lắm, Hanamichi!
Dialogue: 0,0:05:59.55,0:06:00.83,Default,,0,0,0,,Ném tốt lắm!
Dialogue: 0,0:06:01.38,0:06:05.23,Default,,0,0,0,,Ngôi sao của Shohoku là Sakuragi,\Nhơn nữa lần này không phải chạy đến ném vào rổ...
Dialogue: 0,0:06:08.24,0:06:09.61,Default,,0,0,0,,[Mà là ném dưới khung lưới!]
Dialogue: 0,0:06:12.71,0:06:14.22,Default,,0,0,0,,[Cậu Sakuragi này lại...]
Dialogue: 0,0:06:21.49,0:06:23.50,Default,,0,0,0,,[Đáng lý ra cậu ta\Nlà người ngoài ngành mới đúng.]
Dialogue: 0,0:06:33.43,0:06:36.86,Default,,0,0,0,,Chắc chắn là trùng hợp!\NTrùng hợp cho cậu ta ném vào mà thôi!
Dialogue: 0,0:06:37.27,0:06:38.72,Default,,0,0,0,,Thật khiến người khác phải ngạc nhiên.
Dialogue: 0,0:06:39.97,0:06:41.57,Default,,0,0,0,,Bây giờ rất ra dáng đấy.
Dialogue: 0,0:06:41.90,0:06:42.98,Default,,0,0,0,,Maki!
Dialogue: 0,0:06:48.56,0:06:51.17,Default,,0,0,0,,Ai bảo các người\Nkhông đến canh chừng thiên tài này?
Dialogue: 0,0:06:55.15,0:06:55.99,Default,,0,0,0,,[Thằng nhóc này,]
Dialogue: 0,0:06:56.62,0:07:00.09,Default,,0,0,0,,[trong vòng đấu giao hữu, rõ ràng cậu ta\Nchỉ biết dẫn bóng ném bóng mà thôi.]
Dialogue: 0,0:07:02.96,0:07:06.46,Default,,0,0,0,,[Chỉ là tay trái dùng hơi bị nhiều sức,\Nlà thế thôi.]
Dialogue: 0,0:07:06.83,0:07:09.11,Default,,0,0,0,,- Sakuragi, làm tốt lắm!\N- Chơi tốt lắm!
Dialogue: 0,0:07:09.57,0:07:13.04,Default,,0,0,0,,- Đàn anh Kogure, đây là thành quả của tập huấn đặc biệt nhỉ?\N- Đúng vậy.
Dialogue: 0,0:07:14.77,0:07:18.11,Default,,0,0,0,,[Sakuragi, cậu đã làm tốt hết những gì\Nđược tập trong buổi tập huấn đặc biệt rồi.]
Dialogue: 0,0:07:24.12,0:07:28.29,Default,,0,0,0,,Điểm số đầu tiên của Shohoku\Nlà do Sakuragi giành được, thật là quá ngầu!
Dialogue: 0,0:07:29.17,0:07:31.73,Default,,0,0,0,,Hai điểm bên Ryonan cũng do mày làm mất đấy.
Dialogue: 0,0:07:32.65,0:07:34.08,Default,,0,0,0,,Mày im miệng đi!
Dialogue: 0,0:07:39.25,0:07:43.12,Default,,0,0,0,,[Không, lần trước đấu với trường cấp ba\Ntrực thuộc đại học Kainan cũng vậy,]
Dialogue: 0,0:07:44.59,0:07:46.75,Default,,0,0,0,,[lúc đó cậu ta cũng chỉ biết úp rổ\Nvà dẫn vào rổ mà thôi.]
Dialogue: 0,0:07:47.99,0:07:52.63,Default,,0,0,0,,[Không lẽ chỉ trong vài ngày ngắn ngủi\Nđã học được cách ném rồi sao?]
Dialogue: 0,0:07:53.43,0:07:54.03,Default,,0,0,0,,[Sao có thể được?]
Dialogue: 0,0:07:54.85,0:07:56.88,Default,,0,0,0,,Thủ Lĩnh Người Vượn,\Nbây giờ anh bắt đầu rén rồi sao?
Dialogue: 0,0:07:58.22,0:07:59.64,Default,,0,0,0,,Tôi nói cho anh biết,
Dialogue: 0,0:07:59.64,0:08:03.48,Default,,0,0,0,,tốt nhất đừng nên dùng cách nghĩ\Nbình thường đến phán đoán tôi.
Dialogue: 0,0:08:07.98,0:08:11.89,Default,,0,0,0,,Mấy người các người mau phòng thủ đi,\Nphòng thủ, phòng thủ!
Dialogue: 0,0:08:13.69,0:08:15.24,Default,,0,0,0,,Đúng là quá hống hách!
Dialogue: 0,0:08:17.39,0:08:21.26,Default,,0,0,0,,Nếu như lúc thi đấu với chúng ta,\NSakuragi đã biết cách ném bóng
Dialogue: 0,0:08:21.38,0:08:22.91,Default,,0,0,0,,thì tôi nghĩ sẽ rất nguy hiểm đấy.
Dialogue: 0,0:08:23.35,0:08:26.48,Default,,0,0,0,,Đúng vậy, cậu nói rất đúng,\Nnhưng không thể chỉ dựa vào mỗi việc này.
Dialogue: 0,0:08:26.85,0:08:29.39,Default,,0,0,0,,Đúng... đúng vậy.\NMaki, anh đang nói gì thế?
Dialogue: 0,0:08:29.52,0:08:31.49,Default,,0,0,0,,Tên đấy mới là người không đáng sợ,\Nchỉ là một tên quèn thôi.
Dialogue: 0,0:08:31.99,0:08:33.30,Default,,0,0,0,,Tên Sakuragi này
Dialogue: 0,0:08:33.46,0:08:36.36,Default,,0,0,0,,có tiến bộ vượt bậc như thế trong trận này,
Dialogue: 0,0:08:37.09,0:08:39.30,Default,,0,0,0,,so với lần đầu đấu với chúng ta,\Nđộng tác của cậu ta
Dialogue: 0,0:08:39.71,0:08:41.88,Default,,0,0,0,,y như hai người khác nhau vậy.
Dialogue: 0,0:08:44.13,0:08:47.99,Default,,0,0,0,,Tóm lại, dù thế nào đi nữa cũng không thể\Nđể con khỉ đó có thể đứng dưới rổ.
Dialogue: 0,0:08:48.16,0:08:49.98,Default,,0,0,0,,- Fukuda, nhờ vào cậu đấy.\N- Được.
Dialogue: 0,0:08:54.44,0:08:55.18,Default,,0,0,0,,Cậu kìa,
Dialogue: 0,0:08:56.08,0:08:58.15,Default,,0,0,0,,như vậy có\Nnghĩa cậu ta đã liều mạng để luyện tập.
Dialogue: 0,0:09:01.98,0:09:04.79,Default,,0,0,0,,Năng lực của tôi không chỉ\Nlà ném bóng thôi đâu.
Dialogue: 0,0:09:04.81,0:09:05.61,Default,,0,0,0,,Chịu hết nổi!
Dialogue: 0,0:09:05.95,0:09:08.71,Default,,0,0,0,,- Được rồi, phòng thủ!\N- Rõ!
Dialogue: 0,0:09:09.36,0:09:10.68,Default,,0,0,0,,Phòng thủ chặt chẽ vào!
Dialogue: 0,0:09:10.70,0:09:12.33,Default,,0,0,0,,Hanamichi, đừng đứng ngơ ra đấy nữa!
Dialogue: 0,0:09:12.36,0:09:13.46,Default,,0,0,0,,Shohoku cố lên!
Dialogue: 0,0:09:13.59,0:09:18.47,Default,,0,0,0,,Phòng thủ! Phòng thủ!
Dialogue: 0,0:09:18.93,0:09:20.84,Default,,0,0,0,,Mấy cậu lớp 10 hô khí thế quá!
Dialogue: 0,0:09:21.07,0:09:24.14,Default,,0,0,0,,Đương nhiên rồi ạ,\Nđây là trận đấu cuối cùng rồi đấy.
Dialogue: 0,0:09:24.34,0:09:27.01,Default,,0,0,0,,Cho dù ngày mai có tắt tiếng\Nmấy ngày cũng không sao.
Dialogue: 0,0:09:28.34,0:09:29.84,Default,,0,0,0,,Nói tốt lắm, mấy đứa!
Dialogue: 0,0:09:30.18,0:09:32.68,Default,,0,0,0,,Như thế mới giống dàn dự bị của Shohoku chứ!
Dialogue: 0,0:09:32.79,0:09:35.66,Default,,0,0,0,,Phòng thủ! Phòng thủ!
Dialogue: 0,0:09:35.68,0:09:39.40,Default,,0,0,0,,Phòng thủ! Phòng thủ!
Dialogue: 0,0:09:39.48,0:09:41.70,Default,,0,0,0,,Phòng thủ! Phòng thủ!
Dialogue: 0,0:09:45.82,0:09:46.85,Default,,0,0,0,,Là đối đầu của hai trung phong!
Dialogue: 0,0:09:58.41,0:09:59.46,Default,,0,0,0,,Hụt rồi!
Dialogue: 0,0:10:10.24,0:10:12.34,Default,,0,0,0,,Tuyệt vời!\NGiành được bóng bật bảng rồi!
Dialogue: 0,0:10:13.13,0:10:14.21,Default,,0,0,0,,Hanamichi!
Dialogue: 0,0:10:17.30,0:10:19.29,Default,,0,0,0,,Nhanh quá, đã chạy rồi!
Dialogue: 0,0:10:20.11,0:10:20.98,Default,,0,0,0,,Ryota!
Dialogue: 0,0:10:31.69,0:10:32.32,Default,,0,0,0,,Áo trắng!
Dialogue: 0,0:10:32.66,0:10:35.09,Default,,0,0,0,,Chuyền bóng kiểu gì vậy?\NNgười đó có sao không?
Dialogue: 0,0:10:35.35,0:10:36.27,Default,,0,0,0,,Ngã xuống đất luôn rồi.
Dialogue: 0,0:10:39.58,0:10:41.59,Default,,0,0,0,,Nakamura, cậu không sao chứ?
Dialogue: 0,0:10:41.99,0:10:43.59,Default,,0,0,0,,Cậu chuyền bóng kiểu đấy ai mà bắt được?
Dialogue: 0,0:10:43.65,0:10:46.89,Default,,0,0,0,,Đồ quái thai, lỡ mất cơ hội tốt rồi!
Dialogue: 0,0:10:48.74,0:10:51.38,Default,,0,0,0,,Sakuragi đấy đúng là hăng thật.
Dialogue: 0,0:10:51.53,0:10:53.36,Default,,0,0,0,,Cậu ấy giống như muốn dùng mọi sức lực\Nkhông được dùng trong trận
Dialogue: 0,0:10:53.39,0:10:54.83,Default,,0,0,0,,với Takesato phát tiết ra hết vậy.
Dialogue: 0,0:10:56.07,0:10:57.84,Default,,0,0,0,,Vậy thì cũng không nên ném mình chứ!
Dialogue: 0,0:10:58.27,0:11:02.31,Default,,0,0,0,,Hanamichi đó cũng lợi hại thật,\Nchơi đến mức khiến mọi người đều ngạc nhiên.
Dialogue: 0,0:11:02.41,0:11:04.80,Default,,0,0,0,,Nó là người xuất chúng nhất trong đội!
Dialogue: 0,0:11:04.82,0:11:06.78,Default,,0,0,0,,Sakuragi giỏi quá!
Dialogue: 0,0:11:07.01,0:11:09.75,Default,,0,0,0,,Nhưng mà...
Dialogue: 0,0:11:11.18,0:11:15.39,Default,,0,0,0,,- Cảm giác như có bẫy gì đó vậy.\N- Quá dễ thắng.
Dialogue: 0,0:11:15.79,0:11:18.26,Default,,0,0,0,,- Đúng vậy.\N- Chắc chắn có gì đó sai sai.
Dialogue: 0,0:11:22.03,0:11:23.09,Default,,0,0,0,,Kỳ lạ thật!
Dialogue: 0,0:11:24.53,0:11:25.73,Default,,0,0,0,,Thì ra là vậy.
Dialogue: 0,0:11:26.71,0:11:29.33,Default,,0,0,0,,Mặc dù tôi cũng không hiểu cậu ta lắm,
Dialogue: 0,0:11:29.59,0:11:30.66,Default,,0,0,0,,nhưng đúng là cậu ta có thể khiến cậu lo lắng.
Dialogue: 0,0:12:02.90,0:12:05.28,Default,,0,0,0,,[Hình như Shohoku dùng cách\Nmột kèm một như cũ]
Dialogue: 0,0:12:05.41,0:12:08.18,Default,,0,0,0,,[để áp chế Uozomi và Sendoh.]
Dialogue: 0,0:12:16.42,0:12:17.79,Default,,0,0,0,,[Hình như họ vẫn không biết]
Dialogue: 0,0:12:18.55,0:12:22.22,Default,,0,0,0,,[chúng ta có một cầu thủ kinh ngạc khác.]
Dialogue: 0,0:12:38.87,0:12:39.62,Default,,0,0,0,,Đó là...
Dialogue: 0,0:12:40.97,0:12:41.78,Default,,0,0,0,,[Cách phòng thủ ở các khu.]
Dialogue: 0,0:12:45.48,0:12:49.25,Default,,0,0,0,,[Vì để đối phó với cách phòng thủ,\Nbốn người còn lại đã lui về khu vực khác.]
Dialogue: 0,0:12:49.81,0:12:53.85,Default,,0,0,0,,[Chiến thuật tấn công cho\Ncầu thủ có năng lực tấn công mạnh.]
Dialogue: 0,0:12:54.89,0:12:59.02,Default,,0,0,0,,[Ryonan có lòng tin cho\Nsức tấn công của Fukuda chứ?]
Dialogue: 0,0:13:16.72,0:13:17.69,Default,,0,0,0,,Vượt qua rồi!
Dialogue: 0,0:13:20.48,0:13:21.78,Default,,0,0,0,,Được lắm Fukada, lên đi!
Dialogue: 0,0:13:37.23,0:13:38.56,Default,,0,0,0,,Phạm lỗi tấn công.
Dialogue: 0,0:13:45.87,0:13:46.67,Default,,0,0,0,,Mitsui!
Dialogue: 0,0:13:47.94,0:13:48.67,Default,,0,0,0,,Hay lắm!
Dialogue: 0,0:13:50.14,0:13:51.88,Default,,0,0,0,,Chết tiệt! Thằng nhóc Mitsui này!
Dialogue: 0,0:13:57.98,0:14:00.48,Default,,0,0,0,,Đừng để bụng, Fukuda,\Nlần sau ném được là ổn.
Dialogue: 0,0:14:06.19,0:14:08.59,Default,,0,0,0,,Sakuragi, đừng để người khác\Nvượt mặt dễ như vậy.
Dialogue: 0,0:14:09.36,0:14:10.25,Default,,0,0,0,,Mitchi!
Dialogue: 0,0:14:11.43,0:14:12.37,Default,,0,0,0,,Mitsui, làm tốt lắm!
Dialogue: 0,0:14:14.24,0:14:17.20,Default,,0,0,0,,- Mitsui, làm tốt lắm!\N- Mitchi!
Dialogue: 0,0:14:17.33,0:14:18.65,Default,,0,0,0,,Đúng là Mitchi!
Dialogue: 0,0:14:18.75,0:14:20.61,Default,,0,0,0,,Đầu Đinh Đỏ kia, tỉnh táo lên đi!
Dialogue: 0,0:14:20.71,0:14:21.88,Default,,0,0,0,,Đúng là nực cười!
Dialogue: 0,0:14:23.43,0:14:27.60,Default,,0,0,0,,Chết tiệt! Mitchi,\Nanh dám lo chuyện bao đồng!
Dialogue: 0,0:14:29.45,0:14:31.55,Default,,0,0,0,,Bản thân cậu còn không\Nkèm nổi người khác, đừng ra vẻ nữa.
Dialogue: 0,0:14:32.08,0:14:33.22,Default,,0,0,0,,Tôi cố ý đấy!
Dialogue: 0,0:14:35.09,0:14:37.22,Default,,0,0,0,,Tôi cố ý để anh ta vượt mặt\Nrồi tôi sẽ chặn từ phía sau.
Dialogue: 0,0:14:37.39,0:14:39.63,Default,,0,0,0,,Đây mới là chiến lược của thiên tài này!
Dialogue: 0,0:14:39.79,0:14:42.29,Default,,0,0,0,,Ừ, rồi, hay lắm!
Dialogue: 0,0:14:42.43,0:14:44.34,Default,,0,0,0,,Chết tiệt, đừng có chạy, Mitchi!
Dialogue: 0,0:14:44.49,0:14:45.62,Default,,0,0,0,,Ừ ừ.
Dialogue: 0,0:14:45.90,0:14:52.32,Default,,0,0,0,,[Đáng ghét! Đừng tưởng\NSakuragi này chỉ biết nói phét!]
Dialogue: 0,0:15:03.14,0:15:05.64,Default,,0,0,0,,Anh đừng có đắc ý, chẳng qua là trùng hợp\Nbị anh vượt mặt mà thôi.
Dialogue: 0,0:15:06.92,0:15:09.00,Default,,0,0,0,,Cậu phải nói là xin tôi đừng đắc ý mới đúng.
Dialogue: 0,0:15:10.49,0:15:13.93,Default,,0,0,0,,Vì tôi lớn hơn cậu một khóa\Nnên cậu nói chuyện với tôi phải lịch sự vào.
Dialogue: 0,0:15:14.02,0:15:18.07,Default,,0,0,0,,Anh nói gì? Anh dám nói như thế\Nvới thiên tài này sao?
Dialogue: 0,0:15:19.38,0:15:23.08,Default,,0,0,0,,Hình như Fukuda với Sakuragi\Nđang nói chuyện với nhau.
Dialogue: 0,0:15:24.08,0:15:24.98,Default,,0,0,0,,Nói mãi không ngừng.
Dialogue: 0,0:15:25.62,0:15:29.65,Default,,0,0,0,,Fukuda, đừng để bị khiêu khích,\Ntên đó giỏi nhất là nói phét đấy!
Dialogue: 0,0:15:29.73,0:15:30.86,Default,,0,0,0,,Ông nói gì đó, ông già!
Dialogue: 0,0:15:30.99,0:15:33.56,Default,,0,0,0,,Không lẽ ông quên mất sự đáng sợ\Ncủa thiên tài này rồi sao?
Dialogue: 0,0:15:34.93,0:15:35.96,Default,,0,0,0,,Ông già?
Dialogue: 0,0:15:37.01,0:15:38.35,Default,,0,0,0,,Vừa nãy cậu nghe thấy không?
Dialogue: 0,0:15:38.50,0:15:40.79,Default,,0,0,0,,Cậu ta dám gọi huấn luyện viên\Ncủa Ryonan là ông già!
Dialogue: 0,0:15:40.90,0:15:43.14,Default,,0,0,0,,Chết tiệt! Sakuragi!
Dialogue: 0,0:15:43.16,0:15:46.17,Default,,0,0,0,,Huấn luyện viên, Sakuragi nói chuyện\Nkhông có ý xấu gì đâu.
Dialogue: 0,0:15:46.17,0:15:47.08,Default,,0,0,0,,Thầy bình tĩnh lại đi!
Dialogue: 0,0:15:47.10,0:15:49.45,Default,,0,0,0,,Cậu bên đội nào vậy hả, Hikoichi?
Dialogue: 0,0:15:49.45,0:15:53.75,Default,,0,0,0,,Nhưng... nhưng mà huấn luyện viên, vừa nãy\Nthầy mới nói là đừng để bị cậu ta khiêu khích.
Dialogue: 0,0:15:56.99,0:16:00.86,Default,,0,0,0,,[Mình phải bình tĩnh, bây giờ không có\Nthời gian quan tâm tên điên đó.]
Dialogue: 0,0:16:01.30,0:16:02.87,Default,,0,0,0,,[Mặc kệ cậu ta, mặc kệ cậu ta.]
Dialogue: 0,0:16:03.63,0:16:06.67,Default,,0,0,0,,Sakuragi chỉ gọi tôi là người trung niên,\Nxem ra tôi còn đỡ hơn nhiều.
Dialogue: 0,0:16:14.14,0:16:15.71,Default,,0,0,0,,Lại là Sakuragi đấu với Fukuda!
Dialogue: 0,0:16:16.98,0:16:18.15,Default,,0,0,0,,Tôi phải tránh được anh!
Dialogue: 0,0:16:19.72,0:16:21.35,Default,,0,0,0,,Fukuda, cho dù tôi nhỏ tuổi hơn anh,
Dialogue: 0,0:16:21.38,0:16:25.12,Default,,0,0,0,,nhưng về năng lực tôi chắc chắn là hơn anh.
Dialogue: 0,0:16:26.32,0:16:28.43,Default,,0,0,0,,Sakuragi, chúng ta cùng phân thắng thua đi.
Dialogue: 0,0:16:39.34,0:16:40.77,Default,,0,0,0,,Đây gọi là động tác giả.
Dialogue: 0,0:16:41.77,0:16:43.47,Default,,0,0,0,,Hay cho một động tác giả!
Dialogue: 0,0:16:43.84,0:16:46.48,Default,,0,0,0,,Đồ ngốc, Fukuda sẽ không bị\Nmấy trò vặt đấy lừa đâu!
Dialogue: 0,0:16:46.58,0:16:48.28,Default,,0,0,0,,Cậu ta sẽ không từ bỏ việc kèm cậu đâu!
Dialogue: 0,0:16:50.15,0:16:52.68,Default,,0,0,0,,Tên đấy\Nquả nhiên không giỏi về việc phòng thủ.
Dialogue: 0,0:16:54.98,0:16:57.10,Default,,0,0,0,,[Hình như có cơ hội để thoát khỏi anh ta rồi.]
Dialogue: 0,0:16:58.02,0:16:59.45,Default,,0,0,0,,Thiên tài chính là
Dialogue: 0,0:17:00.49,0:17:06.20,Default,,0,0,0,,có 99% là tài năng, 1% là cố gắng.
Dialogue: 0,0:17:06.99,0:17:08.24,Default,,0,0,0,,Đồ ngốc!
Dialogue: 0,0:17:10.10,0:17:11.17,Default,,0,0,0,,Mau tấn công!
Dialogue: 0,0:17:13.78,0:17:14.62,Default,,0,0,0,,Chết tiệt!
Dialogue: 0,0:17:22.42,0:17:24.25,Default,,0,0,0,,Koshino, cẩn thận phía sau!
Dialogue: 0,0:17:27.23,0:17:28.43,Default,,0,0,0,,Nhanh... nhanh quá!
Dialogue: 0,0:17:28.76,0:17:30.53,Default,,0,0,0,,Tốc độ của Miyagi sao nhanh thế?
Dialogue: 0,0:17:47.08,0:17:48.65,Default,,0,0,0,,Sức bật cao của cậu ấy cũng rất lợi hại!
Dialogue: 0,0:17:49.05,0:17:51.60,Default,,0,0,0,,Chặn tốt lắm! Tuyệt vời! Ryota!
Dialogue: 0,0:17:53.02,0:17:56.99,Default,,0,0,0,,Cậu ta giỏi nhất là bật cao\Ncho dù thân hình cậu ta nhỏ.
Dialogue: 0,0:18:00.36,0:18:02.19,Default,,0,0,0,,Bóng còn chưa ra khỏi sân!
Dialogue: 0,0:18:04.50,0:18:04.95,Default,,0,0,0,,Fukuda!
Dialogue: 0,0:18:09.07,0:18:10.63,Default,,0,0,0,,Đừng hòng lấy được!
Dialogue: 0,0:18:18.42,0:18:19.85,Default,,0,0,0,,Giành hay lắm! Tuyệt!
Dialogue: 0,0:18:31.50,0:18:33.35,Default,,0,0,0,,Cậu đang làm gì vậy?\NCòn không mau nhặt bóng lên?
Dialogue: 0,0:18:37.84,0:18:40.91,Default,,0,0,0,,- Tốt, giành được rồi!\N-  Tốt lắm, Sakuragi!
Dialogue: 0,0:18:40.91,0:18:42.04,Default,,0,0,0,,Đúng là thiên tài!
Dialogue: 0,0:18:44.95,0:18:47.03,Default,,0,0,0,,Hanimichi, cậu không sao chứ?
Dialogue: 0,0:18:47.23,0:18:48.83,Default,,0,0,0,,Tôi không sao.
Dialogue: 0,0:18:49.55,0:18:51.50,Default,,0,0,0,,Cậu ấy đụng vào đâu rồi sao?
Dialogue: 0,0:18:54.35,0:18:56.82,Default,,0,0,0,,- Hanamichi.\N- Mày phải ráng nhịn đau đấy.
Dialogue: 0,0:18:57.37,0:18:59.50,Default,,0,0,0,,Cố lên, Sakuragi!
Dialogue: 0,0:18:59.52,0:19:01.36,Default,,0,0,0,,Haruko!
Dialogue: 0,0:19:06.50,0:19:08.56,Default,,0,0,0,,Được rồi, ghi một điểm nào!
Dialogue: 0,0:19:08.87,0:19:11.47,Default,,0,0,0,,- Chúng ta phải thắng!\N- Đúng!
Dialogue: 0,0:19:12.07,0:19:17.71,Default,,0,0,0,,- Shohoku!\N- Ryonan!
Dialogue: 0,0:19:27.72,0:19:29.52,Default,,0,0,0,,Đến đây nào, Shohoku!
Dialogue: 0,0:19:50.34,0:19:53.00,Default,,0,0,0,,Uozumi, làm tốt lắm, nhảy cao lắm!
Dialogue: 0,0:19:54.45,0:19:56.33,Default,,0,0,0,,Uozumi, chặn tốt lắm!
Dialogue: 0,0:19:57.92,0:19:58.92,Default,,0,0,0,,Khốn nạn!
Dialogue: 0,0:20:01.45,0:20:06.46,Default,,0,0,0,,- Tên khốn to con.\N- Đừng tưởng các cậu đứng dưới rổ thì có thể ghi được điểm.
Dialogue: 0,0:20:06.89,0:20:09.44,Default,,0,0,0,,Akagi, Rukawa, Sakuragi.
Dialogue: 0,0:20:09.85,0:20:10.83,Default,,0,0,0,,Gì?
Dialogue: 0,0:20:10.95,0:20:13.78,Default,,0,0,0,,Anh vẫn hống hách như thế!
Dialogue: 0,0:20:16.53,0:20:18.54,Default,,0,0,0,,Trận đấu chính thức bây giờ mới bắt đầu.
Dialogue: 0,0:20:19.67,0:20:21.67,Default,,0,0,0,,Thắng hay thua hoàn toàn dựa vào trận này!
Dialogue: 0,0:20:29.25,0:20:34.29,Default,,0,0,0,,[Shohoku và Ryonan đã triển khai\Nchiến thuật không ai nhường ai,]
Dialogue: 0,0:20:35.69,0:20:40.62,Default,,0,0,0,,[nhưng một nguy cơ không ngờ được\Nđang từng bước đến gần Shohoku.]
Dialogue: 0,0:20:57.47,0:21:00.35,Default,,0,0,0,,♫ Trong giấc mơ nhếch nhác thảm hại ♫
Dialogue: 0,0:21:01.00,0:21:03.44,Default,,0,0,0,,♫ Tôi bỗng choàng tỉnh ♫
Dialogue: 0,0:21:05.19,0:21:09.31,Default,,0,0,0,,♫ Lại một buổi sớm với ánh nắng rực rỡ ♫
Dialogue: 0,0:21:12.80,0:21:18.69,Default,,0,0,0,,♫ Nghe bài hát mình thích ♫
Dialogue: 0,0:21:20.34,0:21:26.06,Default,,0,0,0,,♫ Mặc chiếc áo sơ mi sạch sẽ ♫
Dialogue: 0,0:21:27.29,0:21:30.14,Default,,0,0,0,,♫ Đêm qua ♫
Dialogue: 0,0:21:30.65,0:21:34.08,Default,,0,0,0,,♫ Có người nói với tôi với vẻ mệt mỏi rằng ♫
Dialogue: 0,0:21:34.18,0:21:36.19,Default,,0,0,0,,♫ Muốn tìm kiếm kích thích ♫
Dialogue: 0,0:21:36.31,0:21:39.75,Default,,0,0,0,,♫ Muốn đột phá thực tại ♫
Dialogue: 0,0:21:40.05,0:21:42.04,Default,,0,0,0,,♫ Đừng lún sâu như thế nữa ♫
Dialogue: 0,0:21:42.19,0:21:45.99,Default,,0,0,0,,♫ Hãy nắm giữ khoảnh khắc tỏa sáng ♫
Dialogue: 0,0:21:46.11,0:21:49.39,Default,,0,0,0,,♫ Tôi phải sống đúng với bản thân mình ♫
Dialogue: 0,0:21:50.26,0:21:53.87,Default,,0,0,0,,♫ Có lẽ sẽ hối hận, có lẽ không hoàn hảo ♫
Dialogue: 0,0:21:53.96,0:21:57.84,Default,,0,0,0,,♫ Nhưng đã không còn cô đơn nữa wow ♫
Dialogue: 0,0:21:58.00,0:22:05.32,Default,,0,0,0,,♫ Giọt nước mắt tràn mi\Nlại là thứ đẹp đẽ nhất ♫
Dialogue: 0,0:22:05.43,0:22:09.22,Default,,0,0,0,,♫ Tôi lại bước lên hành trình vô tận ♫
Dialogue: 0,0:22:09.38,0:22:13.44,Default,,0,0,0,,♫ Đi thẳng về phía trước,\Nkhông bao giờ lùi bước ♫
Dialogue: 0,0:22:21.24,0:22:22.61,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:24.34,0:22:26.94,Default,,0,0,0,,Anh đang làm gì vậy, Tinh Tinh,\Nchuyền bóng đều sai!
Dialogue: 0,0:22:27.78,0:22:28.53,Default,,0,0,0,,Thế nào?
Dialogue: 0,0:22:28.82,0:22:31.38,Default,,0,0,0,,Không phải anh sợ rồi chứ?
Dialogue: 0,0:22:31.78,0:22:32.92,Default,,0,0,0,,Anh nghe chưa?
Dialogue: 0,0:22:33.15,0:22:33.92,Default,,0,0,0,,Tôi biết rồi!
Dialogue: 0,0:22:34.45,0:22:35.45,Default,,0,0,0,,Đây là cơ hội cuối cùng.
Dialogue: 0,0:22:36.12,0:22:39.06,Default,,0,0,0,,Nếu thua trận này,\Ncánh cửa đến giải toàn quốc sẽ đóng lại.
Dialogue: 0,0:22:39.62,0:22:42.09,Default,,0,0,0,,Nhưng, chỉ dựa vào chân là\Ncó thể thắng được Uozumi sao?
Dialogue: 0,0:22:43.43,0:22:44.29,Default,,0,0,0,,Đừng nghĩ vớ vẩn nữa,
Dialogue: 0,0:22:44.73,0:22:45.93,Default,,0,0,0,,tập trung tinh thần thi đấu!
Dialogue: 0,0:22:46.36,0:22:47.23,Default,,0,0,0,,"Cao thủ bóng rổ!"
Dialogue: 0,0:22:47.70,0:22:48.83,Default,,0,0,0,,"Sự khác thường của Tinh Tinh!"
Dialogue: 0,0:22:49.20,0:22:50.20,Default,,0,0,0,,Nhất định đừng bỏ lỡ nhé!
