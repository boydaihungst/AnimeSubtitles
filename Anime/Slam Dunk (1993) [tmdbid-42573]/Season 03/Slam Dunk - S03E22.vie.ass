Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.71,0:00:20.51,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.71,0:00:24.38,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.80,0:00:30.07,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.34,0:00:36.54,Default,,0,0,0,,♫  Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.28,0:00:44.22,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.12,0:00:50.82,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.26,0:00:57.10,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.36,0:01:02.93,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.47,0:01:10.24,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.98,0:01:19.68,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:20.15,0:01:25.76,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:25.99,0:01:31.76,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:32.13,0:01:40.51,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:56.29,0:01:57.94,Default,,0,0,0,,[Trận đấu của Shohoku và Ryonan]
Dialogue: 0,0:01:58.09,0:02:00.45,Default,,0,0,0,,[kết thúc nửa đầu trận với tình hình\NRyonan dẫn trước sáu điểm.]
Dialogue: 0,0:02:01.76,0:02:05.69,Default,,0,0,0,,[Hanamichi bị Fukuda đánh bại,\Ntrải nghiệm nỗi nhục lớn nhất.]
Dialogue: 0,0:02:07.03,0:02:10.36,Default,,0,0,0,,[Ở một mặt khác, Rukawa chỉ ghi được hai điểm\Ntrong nửa đầu trận]
Dialogue: 0,0:02:10.60,0:02:12.83,Default,,0,0,0,,[thể hiện ra thái độ làm người khác\Nkhông rét mà run.]
Dialogue: 0,0:02:16.77,0:02:20.27,Default,,0,0,0,,Từ đầu cậu đã định\Nquyết định thắng thua ở nửa sau trận.
Dialogue: 0,0:02:20.43,0:02:22.07,Default,,0,0,0,,Làm vậy là để đánh bại anh.
Dialogue: 0,0:02:23.54,0:02:24.55,Default,,0,0,0,,Anh tỉnh ra đi.
Dialogue: 0,0:02:38.13,0:02:39.53,Default,,0,0,0,,[Rukawa nhìn mà như không thấy\Nvới Hanamichi đang tức giận,]
Dialogue: 0,0:02:39.96,0:02:42.53,Default,,0,0,0,,[dùng thể lực giữ lại ở nửa đầu trận]
Dialogue: 0,0:02:42.60,0:02:46.47,Default,,0,0,0,,[cùng thái độ hết sức tự tin\Nđể khiêu chiến Sendoh.]
Dialogue: 0,0:02:53.68,0:02:55.85,Default,,0,0,0,,Người đánh bại Sendoh là tao.
Dialogue: 0,0:02:56.12,0:02:59.24,Default,,0,0,0,,[Chết tiệt.]
Dialogue: 0,0:03:03.56,0:03:12.34,Default,,0,0,0,,[Người khiêu chiến nguy hiểm nhất!]
Dialogue: 0,0:03:05.91,0:03:08.50,Default,,0,0,0,,[Người khiêu chiến nguy hiểm nhất!]
Dialogue: 0,0:03:18.18,0:03:20.79,Default,,0,0,0,,[Đừng vào, đừng vào.]
Dialogue: 0,0:03:21.88,0:03:25.31,Default,,0,0,0,,[Đừng vào, đừng vào.]
Dialogue: 0,0:03:28.31,0:03:32.99,Default,,0,0,0,,Tốt quá, chỉ còn một điểm nữa thôi là hòa rồi,\Nsắp hòa rồi!
Dialogue: 0,0:03:33.02,0:03:34.45,Default,,0,0,0,,Tốt quá, Rukawa!
Dialogue: 0,0:03:38.48,0:03:40.12,Default,,0,0,0,,Ban nãy mày làm gì vậy?
Dialogue: 0,0:03:40.39,0:03:41.99,Default,,0,0,0,,Đừng càm ràm nữa, mày im đi cho tao.
Dialogue: 0,0:03:42.11,0:03:42.84,Default,,0,0,0,,Đồ ngu.
Dialogue: 0,0:03:43.25,0:03:45.96,Default,,0,0,0,,[Chết tiệt.]
Dialogue: 0,0:03:48.87,0:03:50.94,Default,,0,0,0,,Người đánh bại Sendoh là tao.
Dialogue: 0,0:03:51.96,0:03:53.33,Default,,0,0,0,,[Đồ ngu,]
Dialogue: 0,0:03:53.76,0:03:56.08,Default,,0,0,0,,[vậy mà mày dám cướp\Ndanh ngôn của thiên tài tao.]
Dialogue: 0,0:03:56.11,0:03:59.23,Default,,0,0,0,,[Có cách đánh bại anh ta thì mày thử đi.]
Dialogue: 0,0:03:59.57,0:04:02.40,Default,,0,0,0,,[Dù sao thì thể loại như mày\Ncũng sẽ thua dưới tay Sendoh thôi,]
Dialogue: 0,0:04:02.47,0:04:04.41,Default,,0,0,0,,[đến lúc đó thì mày đừng hối hận.]
Dialogue: 0,0:04:05.50,0:04:06.33,Default,,0,0,0,,Đúng rồi.
Dialogue: 0,0:04:06.71,0:04:08.08,Default,,0,0,0,,Nếu Rukawa không thể đánh bại Sendoh
Dialogue: 0,0:04:08.18,0:04:10.24,Default,,0,0,0,,thì cứ để mình đối phó với anh ta.
Dialogue: 0,0:04:10.36,0:04:11.88,Default,,0,0,0,,Quá tuyệt, cứ làm vậy đi.
Dialogue: 0,0:04:19.58,0:04:21.65,Default,,0,0,0,,[Chỉ cần mình giải quyết anh ta\Nthì mọi thứ dễ làm rồi.]
Dialogue: 0,0:04:21.74,0:04:23.53,Default,,0,0,0,,[Vậy thì mình sẽ là\Nngười chiến thắng cuối cùng.]
Dialogue: 0,0:04:24.71,0:04:26.18,Default,,0,0,0,,[Tốt lắm, làm vậy đi.]
Dialogue: 0,0:04:31.69,0:04:33.22,Default,,0,0,0,,Hanamichi, mày đang làm gì vậy?
Dialogue: 0,0:04:33.32,0:04:34.47,Default,,0,0,0,,Đồ ngu.
Dialogue: 0,0:04:34.55,0:04:36.25,Default,,0,0,0,,Đừng có để bị vượt qua dễ dàng như thế!
Dialogue: 0,0:04:36.61,0:04:37.65,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:04:39.45,0:04:39.98,Default,,0,0,0,,Là Fukuda.
Dialogue: 0,0:04:43.14,0:04:44.13,Default,,0,0,0,,Fukuda.
Dialogue: 0,0:04:44.43,0:04:45.43,Default,,0,0,0,,Cản anh ta lại!
Dialogue: 0,0:04:46.69,0:04:48.23,Default,,0,0,0,,Đồ khốn, đừng hòng ném rổ!
Dialogue: 0,0:04:54.50,0:04:55.00,Default,,0,0,0,,Tốt.
Dialogue: 0,0:05:02.64,0:05:05.31,Default,,0,0,0,,- Phạm lỗi!\N- Chết tiệt, Mitsui!
Dialogue: 0,0:05:06.25,0:05:08.45,Default,,0,0,0,,Fukuda, làm tốt lắm.
Dialogue: 0,0:05:13.25,0:05:14.62,Default,,0,0,0,,Không hổ là Mitsui,
Dialogue: 0,0:05:15.09,0:05:17.48,Default,,0,0,0,,muốn lấy được điểm\Ntừ tay cậu ta không đơn giản.
Dialogue: 0,0:05:18.50,0:05:20.37,Default,,0,0,0,,Từ sau khi bị Mitsui kèm,
Dialogue: 0,0:05:20.71,0:05:22.67,Default,,0,0,0,,số điểm Fukuda giành được đã dừng lại.
Dialogue: 0,0:05:22.94,0:05:25.44,Default,,0,0,0,,Nhưng Mitsui cũng vậy,
Dialogue: 0,0:05:25.68,0:05:27.08,Default,,0,0,0,,từ sau khi kèm cậu ấy\Nthì anh ta không ghi được điểm nữa.
Dialogue: 0,0:05:27.24,0:05:29.71,Default,,0,0,0,,Đúng, như vậy là tốt nhất.
Dialogue: 0,0:05:30.34,0:05:31.31,Default,,0,0,0,,Fukuda.
Dialogue: 0,0:05:31.72,0:05:34.33,Default,,0,0,0,,Làm tốt lắm, tiếp tục tấn công.
Dialogue: 0,0:05:36.73,0:05:38.77,Default,,0,0,0,,Số 14 đội đỏ phạm lỗi đẩy người.
Dialogue: 0,0:05:39.40,0:05:41.97,Default,,0,0,0,,Chỉ cần Fukuda tiếp tục tấn công mạnh mẽ
Dialogue: 0,0:05:42.30,0:05:44.74,Default,,0,0,0,,thì số lần Mitsui phạm lỗi cũng sẽ tăng lên.
Dialogue: 0,0:05:45.51,0:05:48.51,Default,,0,0,0,,Dù không phạm lỗi\Nthì cũng có thể tiêu hao thể lực của cậu ta.
Dialogue: 0,0:05:50.14,0:05:52.15,Default,,0,0,0,,Thành viên dự bị của Shohoku\Ncó thực lực không mạnh,
Dialogue: 0,0:05:52.51,0:05:54.86,Default,,0,0,0,,chỉ cần kéo Mitsui xuống
Dialogue: 0,0:05:54.88,0:05:57.05,Default,,0,0,0,,thì nhiệm vụ của Fukuda đã hoàn thành.
Dialogue: 0,0:05:59.39,0:06:03.93,Default,,0,0,0,,[Nửa sau trận\Nphải trông cậy vào hai cậu ghi điểm đấy,]
Dialogue: 0,0:06:04.36,0:06:06.71,Default,,0,0,0,,[Sendoh, Uozumi.]
Dialogue: 0,0:06:06.76,0:06:09.40,Default,,0,0,0,,[Từ bây giờ, trông chờ vào hai cậu là được.]
Dialogue: 0,0:06:41.90,0:06:43.00,Default,,0,0,0,,Tốt.
Dialogue: 0,0:06:43.51,0:06:45.12,Default,,0,0,0,,Ném đẹp lắm, Uozumi!
Dialogue: 0,0:06:45.25,0:06:47.27,Default,,0,0,0,,- Tốt.\N- Tuyệt quá.
Dialogue: 0,0:06:48.30,0:06:49.10,Default,,0,0,0,,Chuyền tốt lắm.
Dialogue: 0,0:06:51.67,0:06:53.61,Default,,0,0,0,,- [Tiêu rồi.]\N- Đừng để ý.
Dialogue: 0,0:06:57.89,0:06:59.49,Default,,0,0,0,,[Đừng để ý.]
Dialogue: 0,0:07:00.76,0:07:03.92,Default,,0,0,0,,[Đừng để ý nghĩa là\Nkéo gần khoảng cách lại ngay là được,]
Dialogue: 0,0:07:04.56,0:07:08.03,Default,,0,0,0,,[vậy nên hãy nhanh chóng\Nchuyền bóng cho cậu, phải không?]
Dialogue: 0,0:07:08.46,0:07:09.06,Default,,0,0,0,,[Rukawa.]
Dialogue: 0,0:07:19.23,0:07:20.46,Default,,0,0,0,,[Tự tin vậy sao?]
Dialogue: 0,0:07:23.04,0:07:26.04,Default,,0,0,0,,[Tôi biết rồi, đừng có giục tôi như vậy.]
Dialogue: 0,0:07:29.07,0:07:29.63,Default,,0,0,0,,Uekusa.
Dialogue: 0,0:07:31.66,0:07:35.13,Default,,0,0,0,,[Rukawa, bọn họ đừng hòng\Ndễ dàng chuyền cho cậu.]
Dialogue: 0,0:08:10.29,0:08:10.80,Default,,0,0,0,,Nhanh quá.
Dialogue: 0,0:08:11.36,0:08:13.48,Default,,0,0,0,,[Vội vàng ra tay không thể đưa bóng vào rổ.]
Dialogue: 0,0:08:13.51,0:08:15.00,Default,,0,0,0,,Bắt bóng bật bảng!
Dialogue: 0,0:08:21.43,0:08:22.33,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:08:28.70,0:08:31.13,Default,,0,0,0,,Ồ, vào rồi, làm tốt lắm!
Dialogue: 0,0:08:31.17,0:08:33.10,Default,,0,0,0,,Động tác giả tốt lắm, Rukawa!
Dialogue: 0,0:08:33.21,0:08:35.21,Default,,0,0,0,,Vậy mà Sendoh lại không thể ngăn cản Rukawa.
Dialogue: 0,0:08:35.38,0:08:37.28,Default,,0,0,0,,Vậy mà cái cậu lớp 10 này\Ncó thể cắt đuôi Sendoh.
Dialogue: 0,0:08:38.05,0:08:41.58,Default,,0,0,0,,- Rukawa vào trạng thái rồi.\N- Cậu ấy vẫn sẽ ghi điểm tiếp.
Dialogue: 0,0:08:42.18,0:08:44.72,Default,,0,0,0,,Từ chuyền bóng đến ném bóng, động tác nào của\Ncậu ta cũng nhanh đến mức không giống thật.
Dialogue: 0,0:08:45.85,0:08:49.19,Default,,0,0,0,,Cứ như cậu ta\Ncó thể ném rổ chính xác như vậy ấy.
Dialogue: 0,0:08:50.29,0:08:54.20,Default,,0,0,0,,Nhưng không đơn giản như vậy đâu.
Dialogue: 0,0:08:54.66,0:08:56.90,Default,,0,0,0,,Nếu quả ban nãy không phải là trùng hợp
Dialogue: 0,0:08:57.47,0:09:01.15,Default,,0,0,0,,thì dù là Sendoh\Ncũng rất khó ngăn cản Rukawa.
Dialogue: 0,0:09:01.72,0:09:05.06,Default,,0,0,0,,Trùng hợp, trùng hợp, trùng hợp.
Dialogue: 0,0:09:05.09,0:09:06.54,Default,,0,0,0,,Tránh ra đi, đừng cản đường.
Dialogue: 0,0:09:06.95,0:09:08.32,Default,,0,0,0,,Cậu ta là một nhân vật lớn.
Dialogue: 0,0:09:09.60,0:09:12.67,Default,,0,0,0,,Có một nhân vật lớn như vậy\Ncùng khóa với các cậu,
Dialogue: 0,0:09:12.97,0:09:16.70,Default,,0,0,0,,năm sau cậu ta sẽ trở thành\Nchướng ngại vật lớn nhất của cậu đấy,
Dialogue: 0,0:09:16.70,0:09:17.57,Default,,0,0,0,,Kiyota.
Dialogue: 0,0:09:18.54,0:09:19.74,Default,,0,0,0,,Em biết rồi.
Dialogue: 0,0:09:24.41,0:09:26.36,Default,,0,0,0,,[Mình chắc chắn không thể bị cậu ta làm sợ hãi.]
Dialogue: 0,0:09:26.50,0:09:28.20,Default,,0,0,0,,[Cậu ta cũng học lớp 10 như mình,]
Dialogue: 0,0:09:28.65,0:09:31.29,Default,,0,0,0,,[mình phải ghi nhớ thật kỹ\Nkỹ thuật chơi bóng của cậu ta trong lòng.]
Dialogue: 0,0:09:31.72,0:09:35.32,Default,,0,0,0,,[Chết tiệt, chết tiệt.]
Dialogue: 0,0:09:35.69,0:09:38.92,Default,,0,0,0,,[Chết tiệt, cái tên Sendoh đó.]
Dialogue: 0,0:09:39.10,0:09:40.84,Default,,0,0,0,,[Không phải là anh ta cố tình nương tay chứ?]
Dialogue: 0,0:09:40.96,0:09:43.00,Default,,0,0,0,,[Cái gì? Muốn đến Shohoku?]
Dialogue: 0,0:09:43.02,0:09:45.53,Default,,0,0,0,,[Tại sao vậy? Vì huấn luyện viên Anzai sao?]
Dialogue: 0,0:09:45.54,0:09:46.39,Default,,0,0,0,,Trường đó gần nhà em.
Dialogue: 0,0:09:49.30,0:09:52.95,Default,,0,0,0,,Cậu làm gì vậy hả Sendoh?\NChưa ăn sáng phải không?
Dialogue: 0,0:09:53.14,0:09:55.09,Default,,0,0,0,,Cậu chơi đàng hoàng cho tôi,\Nkhông được lêu lổng!
Dialogue: 0,0:09:55.28,0:09:58.15,Default,,0,0,0,,Ngăn cản cái tên lớp 10 đó đàng hoàng cho tôi,\Nnghe chưa hả?
Dialogue: 0,0:09:58.52,0:09:59.65,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:10:00.59,0:10:03.89,Default,,0,0,0,,Lớn tiếng quá.\NXin luôn đấy, huấn luyện viên đó thật đáng sợ.
Dialogue: 0,0:10:11.33,0:10:13.70,Default,,0,0,0,,[Sendoh, nếu cậu bị đánh bại]
Dialogue: 0,0:10:13.97,0:10:15.60,Default,,0,0,0,,[thì cả đội sẽ thấy không yên.]
Dialogue: 0,0:10:16.63,0:10:19.26,Default,,0,0,0,,[Mọi người là cả Fukuda và Uozumi,]
Dialogue: 0,0:10:20.10,0:10:22.91,Default,,0,0,0,,[về mặt tinh thần đều trông cậy vào cậu cả.]
Dialogue: 0,0:10:24.78,0:10:27.51,Default,,0,0,0,,[Cậu là người không thể bị đánh bại.]
Dialogue: 0,0:10:30.01,0:10:33.38,Default,,0,0,0,,[Đây là số phận của át chủ bài.]
Dialogue: 0,0:10:41.43,0:10:44.33,Default,,0,0,0,,Trận đấu tập kia là ba tháng trước nhỉ?
Dialogue: 0,0:10:45.63,0:10:48.40,Default,,0,0,0,,[Trong ba tháng ngắn ngủi\Nmà tiến bộ nhanh như vậy.]
Dialogue: 0,0:10:49.33,0:10:52.54,Default,,0,0,0,,Bây giờ cậu có vẻ giống át chủ bài\Ncủa đội bóng rổ của trường cấp ba đấy,
Dialogue: 0,0:10:52.65,0:10:53.32,Default,,0,0,0,,Rukawa.
Dialogue: 0,0:10:53.91,0:10:54.87,Default,,0,0,0,,Vào lúc đó
Dialogue: 0,0:10:55.37,0:10:57.71,Default,,0,0,0,,cậu non như một thằng học sinh cấp hai vậy.
Dialogue: 0,0:10:57.98,0:10:58.98,Default,,0,0,0,,Chết tiệt.
Dialogue: 0,0:11:01.65,0:11:03.95,Default,,0,0,0,,Sendoh đã sống lại.
Dialogue: 0,0:11:04.45,0:11:05.68,Default,,0,0,0,,Khuôn mặt tươi cười,
Dialogue: 0,0:11:05.76,0:11:07.57,Default,,0,0,0,,đây là bằng chứng\Nbọn họ quyết tâm phải làm được.
Dialogue: 0,0:11:11.59,0:11:14.53,Default,,0,0,0,,Trận đấu thì phải như thế này.
Dialogue: 0,0:11:40.92,0:11:41.79,Default,,0,0,0,,Em biết rồi.
Dialogue: 0,0:11:42.52,0:11:48.03,Default,,0,0,0,,Sendoh là kiểu người đối thủ càng mạnh\Nthì ý chí chiến đấu càng dâng cao.
Dialogue: 0,0:11:49.06,0:11:50.59,Default,,0,0,0,,Rukawa của lúc này
Dialogue: 0,0:11:50.84,0:11:51.67,Default,,0,0,0,,nói thẳng ra thì
Dialogue: 0,0:11:51.91,0:11:54.04,Default,,0,0,0,,có thể coi là một trong những vận động viên\Ncó trình độ cao nhất tỉnh,
Dialogue: 0,0:11:55.11,0:11:58.91,Default,,0,0,0,,là một người thách đấu nguy hiểm nhất\Nvới Sendoh,
Dialogue: 0,0:12:00.38,0:12:01.85,Default,,0,0,0,,thế nên ý chí chiến đấu của Sendoh\Nmới dâng cao.
Dialogue: 0,0:12:02.72,0:12:03.48,Default,,0,0,0,,Đồ ngu.
Dialogue: 0,0:12:05.42,0:12:10.46,Default,,0,0,0,,Như cậu ấy thì gọi là tính tình hay thay đổi.\NĐúng là không thể chịu nổi mà.
Dialogue: 0,0:12:15.30,0:12:16.00,Default,,0,0,0,,[Đừng hòng vượt qua.]
Dialogue: 0,0:12:29.28,0:12:32.38,Default,,0,0,0,,- Vào rồi, tốt lắm!\N- Rất tốt!
Dialogue: 0,0:12:32.41,0:12:36.68,Default,,0,0,0,,Quá tuyệt vời!\NLúc này Sendoh đang bắt đầu ra oai đấy.
Dialogue: 0,0:12:38.95,0:12:43.62,Default,,0,0,0,,Dùng cách giống Rukawa ban nãy,\Nlà cố tình sao?
Dialogue: 0,0:12:58.67,0:13:00.01,Default,,0,0,0,,[Anh muốn chứng minh rằng\Nchuyện tôi có thể làm]
Dialogue: 0,0:13:00.41,0:13:01.98,Default,,0,0,0,,[thì anh cũng có thể làm sao?]
Dialogue: 0,0:13:02.98,0:13:03.68,Default,,0,0,0,,Đến đi.
Dialogue: 0,0:13:04.71,0:13:05.71,Default,,0,0,0,,[Như vậy là tốt nhất.]
Dialogue: 0,0:13:09.24,0:13:09.94,Default,,0,0,0,,Rukawa.
Dialogue: 0,0:13:17.28,0:13:17.95,Default,,0,0,0,,Phạm lỗi!
Dialogue: 0,0:13:19.75,0:13:21.65,Default,,0,0,0,,Tốt lắm, không phạm lỗi.
Dialogue: 0,0:13:21.78,0:13:23.52,Default,,0,0,0,,Tại sao vậy? Chẳng phải là phạm lỗi à?
Dialogue: 0,0:13:23.68,0:13:26.75,Default,,0,0,0,,- Tốt quá!\N- Tuyệt lắm Sendoh!
Dialogue: 0,0:13:28.92,0:13:31.43,Default,,0,0,0,,Đồ ngu, mày đang làm gì vậy hả?
Dialogue: 0,0:13:31.44,0:13:32.64,Default,,0,0,0,,Vậy mà lại để bọn họ giành mất bóng.
Dialogue: 0,0:13:32.67,0:13:34.00,Default,,0,0,0,,Bớt lảm nhảm đi, tránh qua một bên.
Dialogue: 0,0:13:34.02,0:13:35.39,Default,,0,0,0,,Mày nói gì hả?
Dialogue: 0,0:13:38.07,0:13:42.20,Default,,0,0,0,,Không, như vậy cũng tốt. Mượn sức\Ncủa Sendoh để tiêu diệt Rukwa trước,
Dialogue: 0,0:13:42.30,0:13:44.51,Default,,0,0,0,,[sau đó mình lại đánh bại Sendoh.]
Dialogue: 0,0:13:45.04,0:13:47.17,Default,,0,0,0,,[Như vậy chẳng phải là tốt nhất sao?]
Dialogue: 0,0:13:47.88,0:13:50.48,Default,,0,0,0,,[Tôi tin tưởng anh đấy, Sendoh.]
Dialogue: 0,0:13:50.78,0:13:51.41,Default,,0,0,0,,Cái thằng này.
Dialogue: 0,0:13:53.75,0:13:54.45,Default,,0,0,0,,[Thôi xong.]
Dialogue: 0,0:13:57.25,0:13:59.05,Default,,0,0,0,,Ghi điểm rồi!
Dialogue: 0,0:13:59.12,0:14:00.45,Default,,0,0,0,,Shohoku cố lên!
Dialogue: 0,0:14:00.69,0:14:01.76,Default,,0,0,0,,Ryonan, các cậu đang làm gì vậy?
Dialogue: 0,0:14:03.02,0:14:05.43,Default,,0,0,0,,- Tốt lắm Miyagi.\N- Ryota.
Dialogue: 0,0:14:06.99,0:14:08.83,Default,,0,0,0,,Sendoh, Koshino không có mặt nữa,
Dialogue: 0,0:14:09.23,0:14:11.00,Default,,0,0,0,,cậu với Uekusa dẫn bóng.
Dialogue: 0,0:14:11.60,0:14:12.73,Default,,0,0,0,,Em quên mất.
Dialogue: 0,0:14:13.30,0:14:15.14,Default,,0,0,0,,Xin lỗi nhé Uekusa. Xin lỗi.
Dialogue: 0,0:14:15.74,0:14:18.04,Default,,0,0,0,,[Sendoh... Rõ ràng là lỗi của mình.]
Dialogue: 0,0:14:24.58,0:14:26.51,Default,,0,0,0,,Được rồi, chúng ta cho thêm một quả vào.
Dialogue: 0,0:14:28.02,0:14:29.22,Default,,0,0,0,,[Từ lúc này,]
Dialogue: 0,0:14:29.25,0:14:32.15,Default,,0,0,0,,[trận đấu đã trở nên giằng co.]
Dialogue: 0,0:14:34.86,0:14:37.59,Default,,0,0,0,,[Ryonan mất điểm do sai lầm\Nhiện chỉ còn dẫn trước một điểm.]
Dialogue: 0,0:14:38.19,0:14:41.56,Default,,0,0,0,,[Do Fukuda tấn công phạm lỗi\Nnên Ryonan mất cơ hội tấn công.]
Dialogue: 0,0:14:42.20,0:14:43.27,Default,,0,0,0,,[Sau đó lấy Uozumi cao hai mét]
Dialogue: 0,0:14:43.30,0:14:45.63,Default,,0,0,0,,[làm trung tâm của phạm vi phòng thủ,]
Dialogue: 0,0:14:45.97,0:14:48.17,Default,,0,0,0,,[làm Shohoku không có cơ hội ghi điểm.]
Dialogue: 0,0:14:48.77,0:14:50.55,Default,,0,0,0,,[Trong thời gian tấn công 30 giây,]
Dialogue: 0,0:14:50.57,0:14:52.34,Default,,0,0,0,,[hai bên đều giành bóng của nhau.]
Dialogue: 0,0:14:54.41,0:14:57.24,Default,,0,0,0,,- Được, tốt lắm!\N- Phòng thủ tốt.
Dialogue: 0,0:14:58.85,0:15:00.55,Default,,0,0,0,,[Đối mặt với thế tấn công của Ryonan,]
Dialogue: 0,0:15:00.95,0:15:02.42,Default,,0,0,0,,[hàng phòng thủ của Shohoku\Ndo Akagi kèm Uozumi,]
Dialogue: 0,0:15:06.69,0:15:07.89,Default,,0,0,0,,[Mitsui kèm Fukuda,]
Dialogue: 0,0:15:10.06,0:15:10.49,Default,,0,0,0,,[và]
Dialogue: 0,0:15:10.86,0:15:14.73,Default,,0,0,0,,[thêm Rukawa - người mới siêu cấp\Ncũng cố gắng phòng thủ Sendoh của Ryonan,]
Dialogue: 0,0:15:15.23,0:15:17.20,Default,,0,0,0,,[ngăn cản mọi cơ hội ghi điểm của Ryonan.]
Dialogue: 0,0:15:29.48,0:15:31.41,Default,,0,0,0,,- 30 giây rồi!\N- Phòng thủ đi!
Dialogue: 0,0:15:38.09,0:15:39.15,Default,,0,0,0,,Không được tính điểm.
Dialogue: 0,0:15:39.99,0:15:40.92,Default,,0,0,0,,Chết tiệt.
Dialogue: 0,0:15:42.26,0:15:43.32,Default,,0,0,0,,Tốt quá.
Dialogue: 0,0:15:43.59,0:15:46.09,Default,,0,0,0,,Được lắm, hết 30 giây rồi!
Dialogue: 0,0:15:46.53,0:15:48.73,Default,,0,0,0,,Chết tiệt, trễ rồi sao?
Dialogue: 0,0:15:51.63,0:15:54.90,Default,,0,0,0,,Sakuragi phụ trách Ikegami,\Nthường xuyên để Ikegami có cơ hội ra tay.
Dialogue: 0,0:15:54.94,0:15:56.60,Default,,0,0,0,,Sakuragi không kèm được cậu ta.
Dialogue: 0,0:15:57.20,0:15:59.47,Default,,0,0,0,,May mà có Akagi bảo vệ phía sau.
Dialogue: 0,0:16:00.61,0:16:03.94,Default,,0,0,0,,[Đúng là không ngờ được.]
Dialogue: 0,0:16:04.61,0:16:06.65,Default,,0,0,0,,Tốt lắm, chúng ta cho thêm một quả vào nào!
Dialogue: 0,0:16:06.95,0:16:08.68,Default,,0,0,0,,Ngăn cản cậu ta cho bóng vào.
Dialogue: 0,0:16:10.43,0:16:14.77,Default,,0,0,0,,[Vì quyền đại diện cho tỉnh Kanagawa\Nchỉ còn lại một,]
Dialogue: 0,0:16:15.50,0:16:17.33,Default,,0,0,0,,[hai đội liên tục phòng thủ,\Nthế nên trong ba phút sau đó,]
Dialogue: 0,0:16:17.45,0:16:19.99,Default,,0,0,0,,[hai đội đều không ghi được điểm.]
Dialogue: 0,0:16:45.35,0:16:46.98,Default,,0,0,0,,Chưa từng thấy phòng thủ chặt chẽ như vậy.
Dialogue: 0,0:16:47.48,0:16:50.52,Default,,0,0,0,,Shohoku và Ryonan phòng thủ chặt như vậy.
Dialogue: 0,0:16:50.92,0:16:52.82,Default,,0,0,0,,Trong thời khắc quan trọng như thế này
Dialogue: 0,0:16:53.25,0:16:55.52,Default,,0,0,0,,là lúc kiểm tra thực lực\Ncủa át chủ bài của hai đội.
Dialogue: 0,0:16:56.89,0:16:59.23,Default,,0,0,0,,Cuối cùng thì át chủ bài của đội nào
Dialogue: 0,0:16:59.59,0:17:01.06,Default,,0,0,0,,mới có thể phá vỡ cục diện giằng co này?
Dialogue: 0,0:17:02.20,0:17:04.43,Default,,0,0,0,,Sẽ là Rukawa hay là Sendoh?
Dialogue: 0,0:17:05.63,0:17:08.24,Default,,0,0,0,,Tóm lại thì người đó\Nchắc chắn không phải Sakuragi.
Dialogue: 0,0:17:10.77,0:17:12.68,Default,,0,0,0,,[Không được hoảng.]
Dialogue: 0,0:17:12.97,0:17:15.14,Default,,0,0,0,,[Chỉ cần thiên tài Sakuragi mình]
Dialogue: 0,0:17:15.18,0:17:16.94,Default,,0,0,0,,[đánh bại Sendoh ở phút cuối cùng là được.]
Dialogue: 0,0:17:17.68,0:17:19.61,Default,,0,0,0,,[Kết quả là mình thắng là được,]
Dialogue: 0,0:17:20.15,0:17:21.82,Default,,0,0,0,,[Rukawa không phải là vấn đề.]
Dialogue: 0,0:17:30.72,0:17:31.56,Default,,0,0,0,,Vượt qua rồi!
Dialogue: 0,0:17:50.64,0:17:51.75,Default,,0,0,0,,Ném bóng đổi tay!
Dialogue: 0,0:17:52.15,0:17:55.18,Default,,0,0,0,,- Không hổ là Sendoh.\N- Làm tốt lắm!
Dialogue: 0,0:17:57.79,0:18:01.72,Default,,0,0,0,,- Giỏi thật, không hổ là Sendoh.\N- Cậu từng thấy động tác đó chưa?
Dialogue: 0,0:18:05.39,0:18:07.56,Default,,0,0,0,,[Thật không tin được.]
Dialogue: 0,0:18:07.58,0:18:09.73,Default,,0,0,0,,[Sendoh, anh giỏi quá đi.]
Dialogue: 0,0:18:10.10,0:18:11.70,Default,,0,0,0,,Rukawa, cậu thấy chưa hả?
Dialogue: 0,0:18:11.81,0:18:13.34,Default,,0,0,0,,Cậu còn kém lắm!
Dialogue: 0,0:18:17.18,0:18:18.12,Default,,0,0,0,,Giỏi thật.
Dialogue: 0,0:18:18.58,0:18:20.72,Default,,0,0,0,,Trong thời khắc quan trọng như vậy\Nvẫn có thể ghi điểm,
Dialogue: 0,0:18:21.15,0:18:23.32,Default,,0,0,0,,đây mới là màn thể hiện của át chủ bài.
Dialogue: 0,0:18:25.95,0:18:26.48,Default,,0,0,0,,[Đó là...]
Dialogue: 0,0:18:30.09,0:18:33.32,Default,,0,0,0,,[Quả cuối cùng trong trận đấu tập\Ncũng bị đánh bại như vậy.]
Dialogue: 0,0:18:35.36,0:18:36.03,Default,,0,0,0,,Vẫn chưa đâu!
Dialogue: 0,0:18:56.42,0:18:58.65,Default,,0,0,0,,[Lại nhớ đến quá khứ đau thương đó.]
Dialogue: 0,0:18:59.89,0:19:01.16,Default,,0,0,0,,Quả ban nãy không có cách nào.
Dialogue: 0,0:19:01.19,0:19:02.72,Default,,0,0,0,,Tôi biết. Đi thôi!
Dialogue: 0,0:19:24.11,0:19:26.41,Default,,0,0,0,,Vào rồi, tuyệt quá!
Dialogue: 0,0:19:26.68,0:19:27.85,Default,,0,0,0,,Hòa rồi!
Dialogue: 0,0:19:33.12,0:19:34.16,Default,,0,0,0,,Tên này.
Dialogue: 0,0:19:35.32,0:19:36.00,Default,,0,0,0,,Ném đẹp lắm.
Dialogue: 0,0:19:36.62,0:19:39.59,Default,,0,0,0,,Rukawa!
Dialogue: 0,0:19:40.80,0:19:46.63,Default,,0,0,0,,Rukawa, Rukawa, LOVE, Rukawa!
Dialogue: 0,0:19:47.77,0:19:50.81,Default,,0,0,0,,Rukawa và Sendoh... Nửa sau của trận đấu
Dialogue: 0,0:19:50.84,0:19:53.54,Default,,0,0,0,,đã thành trận đấu ghi điểm\Ncủa hai người bọn họ.
Dialogue: 0,0:19:53.87,0:19:55.11,Default,,0,0,0,,Tóm lại thì cả hai đều rất giỏi.
Dialogue: 0,0:19:55.64,0:19:57.75,Default,,0,0,0,,So ra thì Hanamichi...
Dialogue: 0,0:19:58.28,0:19:59.91,Default,,0,0,0,,Thằng đó đang làm gì vậy?
Dialogue: 0,0:20:02.58,0:20:04.02,Default,,0,0,0,,[Sendoh.]
Dialogue: 0,0:20:04.36,0:20:07.26,Default,,0,0,0,,[Anh không được để thua Rukawa.]
Dialogue: 0,0:20:21.94,0:20:24.78,Default,,0,0,0,,[Shohoku và Ryonan đã hòa nhau.]
Dialogue: 0,0:20:26.01,0:20:27.31,Default,,0,0,0,,[Hai bên người đến kẻ đi,]
Dialogue: 0,0:20:27.92,0:20:30.75,Default,,0,0,0,,[Rukawa và Sendoh đặt cược\Nsức mạnh của át chủ bài,]
Dialogue: 0,0:20:30.92,0:20:32.62,Default,,0,0,0,,[không ai chịu lùi bước.]
Dialogue: 0,0:20:35.09,0:20:36.66,Default,,0,0,0,,[Có thể thay đổi hướng đi của trận đấu]
Dialogue: 0,0:20:37.19,0:20:38.89,Default,,0,0,0,,[là Rukawa hay là Sendoh?]
Dialogue: 0,0:20:39.69,0:20:40.83,Default,,0,0,0,,[Hay là một người khác?]
Dialogue: 0,0:20:57.42,0:21:00.22,Default,,0,0,0,,♫ Trong giấc mơ nhếch nhác thảm hại ♫
Dialogue: 0,0:21:01.23,0:21:03.67,Default,,0,0,0,,♫ Tôi bỗng choàng tỉnh ♫
Dialogue: 0,0:21:05.14,0:21:09.26,Default,,0,0,0,,♫ Lại một buổi sớm với ánh nắng rực rỡ ♫
Dialogue: 0,0:21:12.81,0:21:18.96,Default,,0,0,0,,♫ Nghe bài hát mình thích ♫
Dialogue: 0,0:21:20.27,0:21:25.91,Default,,0,0,0,,♫ Mặc chiếc áo sơ mi sạch sẽ ♫
Dialogue: 0,0:21:27.37,0:21:29.92,Default,,0,0,0,,♫ Đêm qua ♫
Dialogue: 0,0:21:30.61,0:21:33.93,Default,,0,0,0,,♫ Có người nói với tôi với vẻ mệt mỏi rằng ♫
Dialogue: 0,0:21:34.36,0:21:36.27,Default,,0,0,0,,♫ Muốn tìm kiếm kích thích ♫
Dialogue: 0,0:21:36.43,0:21:39.73,Default,,0,0,0,,♫ Muốn đột phá thực tại ♫
Dialogue: 0,0:21:39.86,0:21:41.99,Default,,0,0,0,,♫ Đừng lún sâu như thế nữa ♫
Dialogue: 0,0:21:42.16,0:21:46.12,Default,,0,0,0,,♫ Hãy nắm giữ khoảnh khắc tỏa sáng ♫
Dialogue: 0,0:21:46.28,0:21:49.37,Default,,0,0,0,,♫ Tôi phải sống đúng với bản thân mình ♫
Dialogue: 0,0:21:50.08,0:21:53.83,Default,,0,0,0,,♫ Có lẽ sẽ hối hận, có lẽ không hoàn hảo ♫
Dialogue: 0,0:21:53.91,0:21:57.97,Default,,0,0,0,,♫ Nhưng đã không còn cô đơn nữa wow ♫
Dialogue: 0,0:21:58.11,0:22:05.27,Default,,0,0,0,,♫ Giọt nước mắt tràn mi\Nlại là thứ đẹp đẽ nhất ♫
Dialogue: 0,0:22:05.38,0:22:09.20,Default,,0,0,0,,♫ Tôi lại bước lên hành trình vô tận ♫
Dialogue: 0,0:22:09.20,0:22:13.18,Default,,0,0,0,,♫ Đi thẳng về phía trước,\Nkhông bao giờ lùi bước ♫
Dialogue: 0,0:22:21.43,0:22:23.35,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:24.73,0:22:25.33,Default,,0,0,0,,Ném rổ.
Dialogue: 0,0:22:25.67,0:22:27.63,Default,,0,0,0,,Đừng có đi, Uozumi,\Ncậu ta không có tác dụng gì đâu.
Dialogue: 0,0:22:27.77,0:22:29.90,Default,,0,0,0,,Tôi tự giành rồi tự ném.
Dialogue: 0,0:22:29.97,0:22:31.72,Default,,0,0,0,,Làm loạn quá đấy, không thể vào được.
Dialogue: 0,0:22:31.82,0:22:34.37,Default,,0,0,0,,Tôi tự giành rồi tự ném.
Dialogue: 0,0:22:34.85,0:22:38.94,Default,,0,0,0,,Đồ ngu,\Nsao lại xúc động chắn bóng trên như vậy?
Dialogue: 0,0:22:38.99,0:22:41.19,Default,,0,0,0,,Sakuragi ném rổ thì cứ kệ cậu ta đi.
Dialogue: 0,0:22:41.75,0:22:43.62,Default,,0,0,0,,Nếu không thể khắc chế bản thân
Dialogue: 0,0:22:43.95,0:22:46.29,Default,,0,0,0,,thì cả đời cũng đừng hòng vượt qua Akagi.
Dialogue: 0,0:22:46.89,0:22:47.95,Default,,0,0,0,,"Cao thủ bóng rổ."
Dialogue: 0,0:22:48.25,0:22:49.36,Default,,0,0,0,,"Màn thể hiện hoàn hảo."
Dialogue: 0,0:22:49.59,0:22:50.56,Default,,0,0,0,,Nhất định đừng bỏ lỡ nhé!
