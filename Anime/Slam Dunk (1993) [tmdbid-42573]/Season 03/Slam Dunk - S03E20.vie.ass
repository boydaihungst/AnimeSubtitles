Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.84,0:00:20.80,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.83,0:00:24.50,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.66,0:00:29.93,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.20,0:00:36.40,Default,,0,0,0,,♫  Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.14,0:00:44.08,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:44.98,0:00:50.68,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.12,0:00:56.96,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.22,0:01:02.79,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.33,0:01:10.10,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.84,0:01:19.54,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:20.01,0:01:25.62,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:25.85,0:01:31.62,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:31.99,0:01:40.37,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:57.33,0:02:01.97,Default,,0,0,0,,[Trụ cột của Shohoko, Akagi,\Nvì chấn thương ở chân]
Dialogue: 0,0:02:02.33,0:02:03.82,Default,,0,0,0,,[nên biểu hiện cứ luôn thất thường.]
Dialogue: 0,0:02:03.92,0:02:06.26,Default,,0,0,0,,[Nhưng sau muời phút của nửa trận đầu\Nthì đã lấy lại phong độ.]
Dialogue: 0,0:02:10.99,0:02:12.95,Default,,0,0,0,,[Huấn luyện viên Taoka của Ryonan,]
Dialogue: 0,0:02:13.06,0:02:14.53,Default,,0,0,0,,[phát hiện ra khoảng cách điểm số của hai đội\Nđang dần rút ngắn lại,]
Dialogue: 0,0:02:16.52,0:02:19.05,Default,,0,0,0,,[đã kịp tời xin dừng để hội ý với các cầu thủ.]
Dialogue: 0,0:02:19.15,0:02:21.41,Default,,0,0,0,,[Cố gắng chuyền bóng cho Fukuda,\Nngười mà Hanamichi phụ trách phòng thủ.]
Dialogue: 0,0:02:25.51,0:02:29.31,Default,,0,0,0,,Fukuda.
Dialogue: 0,0:02:29.33,0:02:32.78,Default,,0,0,0,,Fukuda.
Dialogue: 0,0:02:32.91,0:02:35.24,Default,,0,0,0,,Fukuda.
Dialogue: 0,0:02:35.26,0:02:37.80,Default,,0,0,0,,Fukuda.
Dialogue: 0,0:02:37.82,0:02:40.22,Default,,0,0,0,,Sự phòng thủ của mày như xiếc khỉ vậy.
Dialogue: 0,0:02:40.56,0:02:41.29,Default,,0,0,0,,Cái gì cơ?
Dialogue: 0,0:02:42.56,0:02:45.50,Default,,0,0,0,,Là mày khiến anh ta nghĩ vậy.
Dialogue: 0,0:02:48.17,0:02:49.97,Default,,0,0,0,,Mọi người hoàn toàn không xem mày ra gì.
Dialogue: 0,0:02:58.64,0:03:00.01,Default,,0,0,0,,Đồ chết tiệt.
Dialogue: 0,0:03:02.08,0:03:10.09,Default,,0,0,0,,[Sự sỉ nhục lớn nhất đời người!]
Dialogue: 0,0:03:03.55,0:03:05.99,Default,,0,0,0,,[Sự sỉ nhục lớn nhất đời người!]
Dialogue: 0,0:03:42.83,0:03:43.57,Default,,0,0,0,,Trước tình hình hiện tại,
Dialogue: 0,0:03:43.65,0:03:46.49,Default,,0,0,0,,nếu cứ trông chờ vào Uozumi và Sendoh,\Nhai người bị Akagi và Rukawa kẹp chặt
Dialogue: 0,0:03:47.14,0:03:49.82,Default,,0,0,0,,chi bằng gửi hi vọng cho Fukuda\Nđang bị phòng thủ bởi Sakuragi
Dialogue: 0,0:03:50.32,0:03:52.25,Default,,0,0,0,,có lẽ sẽ tốt hơn.
Dialogue: 0,0:03:54.29,0:03:55.16,Default,,0,0,0,,Nếu đây là trận đánh nhau,
Dialogue: 0,0:03:55.19,0:03:57.79,Default,,0,0,0,,thì một cú đập vào đầu của Hanamichi\Nlà có thể phân thắng bại rồi.
Dialogue: 0,0:03:57.99,0:04:00.39,Default,,0,0,0,,Không được, đánh nhau quá ngang ngược rồi.
Dialogue: 0,0:04:00.66,0:04:01.43,Default,,0,0,0,,Không được đánh nhau.
Dialogue: 0,0:04:01.70,0:04:04.57,Default,,0,0,0,,Kiyota, tôi hỏi cậu,\Nbình thường nếu một chọi một,
Dialogue: 0,0:04:04.58,0:04:06.00,Default,,0,0,0,,cậu sẽ phòng thủ như thế nào?
Dialogue: 0,0:04:09.77,0:04:12.39,Default,,0,0,0,,Trước tiên là khom lưng trước,
Dialogue: 0,0:04:12.42,0:04:14.48,Default,,0,0,0,,sau đó,
Dialogue: 0,0:04:14.50,0:04:18.45,Default,,0,0,0,,dùng trực giác như động vật để\Ndự đoán đòn tấn công tiếp theo của đối thủ.
Dialogue: 0,0:04:19.42,0:04:21.82,Default,,0,0,0,,Lúc em phòng thủ chính là như thế.
Dialogue: 0,0:04:27.29,0:04:30.59,Default,,0,0,0,,Lúc chúng ta phòng thủ, là lúc chúng ta đoán\Nđòn tấn công tiếp theo của đối thủ,
Dialogue: 0,0:04:31.09,0:04:33.83,Default,,0,0,0,,cho nên không phải là\Ntrực giác như động vật gì cả.
Dialogue: 0,0:04:37.73,0:04:38.63,Default,,0,0,0,,Đó chỉ là kinh nghiệm.
Dialogue: 0,0:04:45.54,0:04:46.94,Default,,0,0,0,,Nếu bóng đang trên tay đối phương,
Dialogue: 0,0:04:47.27,0:04:50.08,Default,,0,0,0,,thì cần phán đoán được\Nđối phương sẽ chuyền bóng hay dẫn bóng.
Dialogue: 0,0:04:51.25,0:04:53.38,Default,,0,0,0,,Nếu như dẫn bóng\Nthì sẽ đi theo hướng bên trái,
Dialogue: 0,0:04:53.41,0:04:54.95,Default,,0,0,0,,hay là bên phải.
Dialogue: 0,0:04:56.08,0:04:57.83,Default,,0,0,0,,Có thêm vào một số động tác giả hay không,
Dialogue: 0,0:04:57.85,0:05:00.89,Default,,0,0,0,,hay là ném rổ trực tiếp luôn.
Dialogue: 0,0:05:01.86,0:05:02.66,Default,,0,0,0,,Lúc phòng thủ,
Dialogue: 0,0:05:02.88,0:05:04.62,Default,,0,0,0,,có thể dựa vào kinh nghiệm
Dialogue: 0,0:05:04.78,0:05:07.14,Default,,0,0,0,,để đưa ra những dự đoán tùy vào mức độ,
Dialogue: 0,0:05:07.59,0:05:08.86,Default,,0,0,0,,sau đó là quyết định đối phó như thế nào.
Dialogue: 0,0:05:09.16,0:05:11.79,Default,,0,0,0,,Tất cả những điều này đều là kinh nghiệm\Nđược tích lũy dần rồi trở thành thói quen.
Dialogue: 0,0:05:11.93,0:05:14.20,Default,,0,0,0,,Phòng thủ phòng thủ.
Dialogue: 0,0:05:21.17,0:05:22.05,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:05:22.47,0:05:23.99,Default,,0,0,0,,Đi đi, Fukuda.
Dialogue: 0,0:05:24.67,0:05:26.29,Default,,0,0,0,,Hanamichi, ngăn anh ta lại.
Dialogue: 0,0:05:27.64,0:05:28.54,Default,,0,0,0,,Đừng hòng mà qua được.
Dialogue: 0,0:05:34.61,0:05:35.98,Default,,0,0,0,,Về mặt này mà nói,
Dialogue: 0,0:05:36.01,0:05:38.15,Default,,0,0,0,,kinh nghiệm của Sakuragi\Ntuyệt đối không đủ.
Dialogue: 0,0:05:39.38,0:05:40.15,Default,,0,0,0,,[Là bên nào đây?]
Dialogue: 0,0:05:41.18,0:05:44.29,Default,,0,0,0,,Cho nên cậu ta không thể dự đoán được\Nđòn tiếp theo của đối thủ.
Dialogue: 0,0:05:44.59,0:05:47.39,Default,,0,0,0,,[Đáng ghét, anh ta sẽ đi về phía nào?]
Dialogue: 0,0:05:51.64,0:05:52.70,Default,,0,0,0,,Qua được rồi.
Dialogue: 0,0:05:57.58,0:06:00.78,Default,,0,0,0,,Thật tuyệt vời.
Dialogue: 0,0:06:01.65,0:06:03.18,Default,,0,0,0,,Hay lắm, Fukuda.
Dialogue: 0,0:06:03.98,0:06:05.95,Default,,0,0,0,,Đây là điểm thứ 13 mà Fukuda ghi được rồi.
Dialogue: 0,0:06:10.35,0:06:13.56,Default,,0,0,0,,- Đáng ghét.\N- Thật đáng ghét mà.
Dialogue: 0,0:06:13.96,0:06:15.96,Default,,0,0,0,,Sakuragi cố lên!
Dialogue: 0,0:06:19.96,0:06:21.48,Default,,0,0,0,,Nếu như cứ nhảy lên\Nthì Sakuragi còn có thể đỡ được,
Dialogue: 0,0:06:21.61,0:06:24.38,Default,,0,0,0,,nhưng nếu Fukuda vượt người\Nthì Sakuragi không có cách nào chặn được.
Dialogue: 0,0:06:24.74,0:06:25.78,Default,,0,0,0,,Đây là ý gì?
Dialogue: 0,0:06:26.18,0:06:29.38,Default,,0,0,0,,Nếu như lúc đó Fukuda nhảy lên,\NSakuragi có khả năng sẽ chặn Fukuda lại được,
Dialogue: 0,0:06:29.65,0:06:33.78,Default,,0,0,0,,nhưng Fukuda vượt người Sakuragi\Nthì cậu ta không còn cách, đúng không?
Dialogue: 0,0:06:33.98,0:06:34.59,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:06:37.71,0:06:41.18,Default,,0,0,0,,Tôi cho rằng cậu ta thật sự\Nlà một nhân tài, chẳng qua là...
Dialogue: 0,0:06:46.42,0:06:48.35,Default,,0,0,0,,[Thời gian trận đấu nửa trận đầu\Ncòn lại không đến năm phút.]
Dialogue: 0,0:06:48.37,0:06:50.19,Default,,0,0,0,,[Ryonan ghi được 21 điểm,]
Dialogue: 0,0:06:50.82,0:06:53.29,Default,,0,0,0,,[trong đó riêng số 13 - Fukuda,\Nđã ghi được 13 điểm.]
Dialogue: 0,0:06:54.43,0:06:57.86,Default,,0,0,0,,[Có thể thấy rất rõ là\NRyonan đều tập trung bóng cho Fukuda.]
Dialogue: 0,0:07:01.27,0:07:02.73,Default,,0,0,0,,[Lúc hai đội đấu với nhau,]
Dialogue: 0,0:07:02.81,0:07:04.76,Default,,0,0,0,,[nếu đối phương xuất hiện một chút sơ hở,]
Dialogue: 0,0:07:05.14,0:07:07.64,Default,,0,0,0,,[nhất định sẽ tấn công liên tục vào chỗ hở đó.]
Dialogue: 0,0:07:11.27,0:07:13.93,Default,,0,0,0,,[Chiêu thức này\Nkhông chỉ giới hạn trong bóng rổ.]
Dialogue: 0,0:07:15.94,0:07:17.11,Default,,0,0,0,,[Điều này đối với Hanamichi,]
Dialogue: 0,0:07:17.34,0:07:19.47,Default,,0,0,0,,[thật sự là sự sỉ nhục rất lớn.]
Dialogue: 0,0:07:21.48,0:07:24.41,Default,,0,0,0,,Cố lên cố lên.
Dialogue: 0,0:07:26.62,0:07:28.22,Default,,0,0,0,,Anh là át chủ bài của Ryonan.
Dialogue: 0,0:07:28.33,0:07:29.33,Default,,0,0,0,,Fukuda.
Dialogue: 0,0:07:29.48,0:07:31.15,Default,,0,0,0,,Làm người khác hết hồn.
Dialogue: 0,0:07:32.02,0:07:33.99,Default,,0,0,0,,[Họ đến rồi.]
Dialogue: 0,0:08:03.81,0:08:06.05,Default,,0,0,0,,Hay quá hay quá.
Dialogue: 0,0:08:19.10,0:08:21.90,Default,,0,0,0,,[Nơi đó chỉ có bầu trời xanh.]
Dialogue: 0,0:08:30.64,0:08:32.18,Default,,0,0,0,,Em biết ở đâu có sân bóng rổ.
Dialogue: 0,0:08:32.97,0:08:34.13,Default,,0,0,0,,Em dẫn anh đến đó được chứ?
Dialogue: 0,0:08:46.94,0:08:48.95,Default,,0,0,0,,Tuy là có hơi xa,
Dialogue: 0,0:08:49.26,0:08:50.40,Default,,0,0,0,,nhưng bọn em thường đến đây chơi bóng.
Dialogue: 0,0:08:54.75,0:08:55.88,Default,,0,0,0,,Hay quá đay.
Dialogue: 0,0:09:06.01,0:09:07.95,Default,,0,0,0,,Fukuda đang rất cố gắng phòng thủ Sakuragi.
Dialogue: 0,0:09:09.75,0:09:11.10,Default,,0,0,0,,[Tuy không giỏi nhưng rất cố gắng.]
Dialogue: 0,0:09:11.40,0:09:13.46,Default,,0,0,0,,Fukuda phòng thủ hay lắm.
Dialogue: 0,0:09:17.52,0:09:20.65,Default,,0,0,0,,Fukuda, hạ người xuống,\Nđửng để cậu ta vượt người.
Dialogue: 0,0:09:26.56,0:09:29.73,Default,,0,0,0,,Thật không thể tin được, Fukuda đã hét lên.
Dialogue: 0,0:09:32.83,0:09:33.46,Default,,0,0,0,,Qua được rồi.
Dialogue: 0,0:09:35.33,0:09:35.90,Default,,0,0,0,,Sendoh.
Dialogue: 0,0:09:39.17,0:09:40.31,Default,,0,0,0,,Hay lắm.
Dialogue: 0,0:09:40.33,0:09:41.43,Default,,0,0,0,,Đáng ghét.
Dialogue: 0,0:10:06.20,0:10:07.26,Default,,0,0,0,,Hanamichi.
Dialogue: 0,0:10:10.13,0:10:11.14,Default,,0,0,0,,Sao lại thế này?
Dialogue: 0,0:10:12.27,0:10:15.14,Default,,0,0,0,,Vào rồi vào rồi.
Dialogue: 0,0:10:18.30,0:10:19.36,Default,,0,0,0,,Fukuda vào rồi.
Dialogue: 0,0:10:19.80,0:10:22.27,Default,,0,0,0,,Fukuda thật lợi hại quá.
Dialogue: 0,0:10:25.07,0:10:26.44,Default,,0,0,0,,Hay quá.
Dialogue: 0,0:10:27.84,0:10:32.68,Default,,0,0,0,,Ryonan cố lên!
Dialogue: 0,0:10:33.24,0:10:36.15,Default,,0,0,0,,Tại sao mọi người\Nđều đang cổ vũ cho Ryonan vậy?
Dialogue: 0,0:10:39.15,0:10:40.25,Default,,0,0,0,,Cậu ta là quái vậy ư?
Dialogue: 0,0:10:41.42,0:10:44.36,Default,,0,0,0,,Tiêu rồi, xem ra cục diện đã định rồi.
Dialogue: 0,0:10:50.09,0:10:51.96,Default,,0,0,0,,Thật không thể tin đuợc.
Dialogue: 0,0:10:52.16,0:10:53.73,Default,,0,0,0,,Anh của mình.
Dialogue: 0,0:10:54.33,0:10:56.67,Default,,0,0,0,,Thật khó mà tin mà.
Dialogue: 0,0:10:57.18,0:10:57.93,Default,,0,0,0,,[Hay quá.]
Dialogue: 0,0:10:58.12,0:10:59.42,Default,,0,0,0,,[Trạng thái của Fukuda hôm nay rất tốt.]
Dialogue: 0,0:11:00.71,0:11:01.47,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:11:04.38,0:11:05.51,Default,,0,0,0,,Bây giờ cậu đã biết rồi chứ?
Dialogue: 0,0:11:08.79,0:11:10.48,Default,,0,0,0,,Tôi đã thắng cậu rồi.
Dialogue: 0,0:11:11.07,0:11:12.33,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:11:35.17,0:11:35.77,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:11:38.18,0:11:38.94,Default,,0,0,0,,Tạm dừng trận đấu.
Dialogue: 0,0:11:39.74,0:11:40.98,Default,,0,0,0,,Sakuragi cậu ấy,
Dialogue: 0,0:11:41.08,0:11:42.28,Default,,0,0,0,,cậu ấy chảy máu mũi rồi.
Dialogue: 0,0:11:42.31,0:11:43.55,Default,,0,0,0,,Hung khí là gì?
Dialogue: 0,0:11:43.58,0:11:45.45,Default,,0,0,0,,Là ghế hay là gậy sắt?
Dialogue: 0,0:11:45.78,0:11:47.35,Default,,0,0,0,,Đây không phải là trận đấu vật chứ hả?
Dialogue: 0,0:11:52.69,0:11:54.02,Default,,0,0,0,,Sakuragi, cậu không sao chứ?
Dialogue: 0,0:11:55.76,0:11:56.33,Default,,0,0,0,,Hanamichi.
Dialogue: 0,0:12:03.57,0:12:04.40,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:12:22.29,0:12:25.86,Default,,0,0,0,,[Sakuragi, mùi vị thế nào,\NFukuda của chúng tôi xuất sắc chứ?]
Dialogue: 0,0:12:27.56,0:12:29.72,Default,,0,0,0,,[Cậu ấy cũng giống như cậu vậy,\Ntrưởng thành rất nhanh,]
Dialogue: 0,0:12:30.34,0:12:33.00,Default,,0,0,0,,[cũng ngoan cố giống như cậu vậy.]
Dialogue: 0,0:12:47.01,0:12:51.22,Default,,0,0,0,,Ryonan cố lên! Ryonan cố lên!
Dialogue: 0,0:12:51.24,0:12:55.08,Default,,0,0,0,,Ryonan cố lên! Ryonan cố lên!
Dialogue: 0,0:12:55.35,0:12:59.17,Default,,0,0,0,,Ryonan cố lên! Ryonan cố lên!
Dialogue: 0,0:12:59.37,0:13:01.21,Default,,0,0,0,,Ryonan! Ryonan!
Dialogue: 0,0:13:01.23,0:13:03.29,Default,,0,0,0,,Ryonan! Ryonan!
Dialogue: 0,0:13:03.31,0:13:05.25,Default,,0,0,0,,Ryonan! Ryonan!
Dialogue: 0,0:13:05.28,0:13:07.29,Default,,0,0,0,,Ryonan! Ryonan!
