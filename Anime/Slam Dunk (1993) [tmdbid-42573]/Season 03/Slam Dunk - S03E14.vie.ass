Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.44,0:00:20.47,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.82,0:00:24.49,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.84,0:00:30.11,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.38,0:00:36.58,Default,,0,0,0,,♫  Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.32,0:00:44.26,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.16,0:00:50.86,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.30,0:00:57.14,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.40,0:01:02.97,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.51,0:01:10.28,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:14.02,0:01:19.72,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:20.19,0:01:25.80,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.03,0:01:31.80,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:32.17,0:01:40.55,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:54.78,0:01:56.06,Default,,0,0,0,,Đi, nhanh lên.
Dialogue: 0,0:01:56.85,0:01:57.72,Default,,0,0,0,,[Trận đấu vào nửa trận sau.]
Dialogue: 0,0:01:57.75,0:02:01.06,Default,,0,0,0,,[Đối mặt với vị vua\Ntrường trực thuộc Đại học Kainan,]
Dialogue: 0,0:02:01.59,0:02:05.36,Default,,0,0,0,,[dù Uozumi bị đuổi ra khỏi sân\Nnhưng Ryonan vẫn không hề lùi bước.]
Dialogue: 0,0:02:26.08,0:02:28.31,Default,,0,0,0,,[Maki của Kainan, Sendoh của Ryonan,]
Dialogue: 0,0:02:28.48,0:02:30.67,Default,,0,0,0,,[ý chí cạnh tranh của hai người đang tóe lửa]
Dialogue: 0,0:02:30.75,0:02:32.72,Default,,0,0,0,,[làm trận đấu trở nên căng thẳng.]
Dialogue: 0,0:02:34.23,0:02:35.59,Default,,0,0,0,,Xông lên!
Dialogue: 0,0:02:39.73,0:02:40.70,Default,,0,0,0,,[Một khắc trước khi trận đấu kết thúc,]
Dialogue: 0,0:02:41.14,0:02:43.75,Default,,0,0,0,,[Sendoh dứt được khỏi sự quấn riết của Maki\Nvà có một cú úp rổ tuyệt đẹp,]
Dialogue: 0,0:02:43.92,0:02:49.33,Default,,0,0,0,,[làm thời khắc quyết định thắng thua của\NKainan và Ryonan kéo dài đến hiệp đấu phụ.]
Dialogue: 0,0:02:49.96,0:02:58.84,Default,,0,0,0,,[Sendoh - đặt cược trong chớp mắt!]
Dialogue: 0,0:02:52.39,0:02:54.93,Default,,0,0,0,,[Sendoh - đặt cược trong chớp mắt!]
Dialogue: 0,0:03:01.49,0:03:04.33,Default,,0,0,0,,Alo. À, là Haruko.
Dialogue: 0,0:03:05.39,0:03:06.69,Default,,0,0,0,,Sao thế, em bình tĩnh đi.
Dialogue: 0,0:03:10.36,0:03:13.43,Default,,0,0,0,,Em nói gì? Huấn luyện viên Anzai ngất ư?
Dialogue: 0,0:03:14.30,0:03:16.23,Default,,0,0,0,,Anh biết rồi, thầy ấy ở bệnh viện nào?
Dialogue: 0,0:03:18.70,0:03:23.17,Default,,0,0,0,,Theo bác sĩ nói thì bệnh của huấn luyện viên\Ntạm thời không nguy hiểm đến tính mạng.
Dialogue: 0,0:03:24.21,0:03:27.37,Default,,0,0,0,,Thật sự không ngờ là thầy ấy lại có bệnh này.
Dialogue: 0,0:03:28.61,0:03:30.68,Default,,0,0,0,,Trận đấu ngày mai phải làm sao đây?
Dialogue: 0,0:03:31.58,0:03:33.41,Default,,0,0,0,,Bây giờ không phải là lúc\Nquan tâm đến trận đấu.
Dialogue: 0,0:03:36.04,0:03:38.69,Default,,0,0,0,,[Bệnh viện tổng hợp Kitamura]
Dialogue: 0,0:03:49.80,0:03:50.76,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:03:56.70,0:03:58.84,Default,,0,0,0,,Sakuragi, huấn luyện viên làm sao vậy?
Dialogue: 0,0:04:03.88,0:04:04.81,Default,,0,0,0,,Huấn luyện viên Anzai làm sao?
Dialogue: 0,0:04:10.38,0:04:11.72,Default,,0,0,0,,- Sakuragi!\N- Sao thế?
Dialogue: 0,0:04:21.40,0:04:22.03,Default,,0,0,0,,Chẳng lẽ...
Dialogue: 0,0:04:35.17,0:04:36.97,Default,,0,0,0,,Ông ấy mới tỉnh lại.
Dialogue: 0,0:04:38.34,0:04:41.31,Default,,0,0,0,,- Sakuragi chết tiệt.\N- Làm tôi giật cả mình.
Dialogue: 0,0:04:53.72,0:04:57.14,Default,,0,0,0,,Em thấy bây giờ\Nkhông phải là Maki không thể cản cậu ta.
Dialogue: 0,0:04:57.63,0:05:00.63,Default,,0,0,0,,Cậu nghĩ thế? Thật ra tôi cũng nghĩ vậy.
Dialogue: 0,0:05:02.86,0:05:05.57,Default,,0,0,0,,Tôi thấy Maki có vẻ như là cố tình tránh né.
Dialogue: 0,0:05:07.07,0:05:09.04,Default,,0,0,0,,Không, từ cách dẫn bóng để ném rổ thì
Dialogue: 0,0:05:10.37,0:05:13.91,Default,,0,0,0,,rõ ràng là Sendoh đơn giản là\Nđể Maki đuổi theo cậu ta,
Dialogue: 0,0:05:15.26,0:05:16.30,Default,,0,0,0,,lại còn là cố tình.
Dialogue: 0,0:05:25.45,0:05:27.05,Default,,0,0,0,,- Đội trưởng.\N- Là Fujima sao?
Dialogue: 0,0:05:27.45,0:05:28.33,Default,,0,0,0,,Thật kìa.
Dialogue: 0,0:05:28.69,0:05:31.19,Default,,0,0,0,,Anh ấy nói\Nkhông muốn xem trận đấu của Kainan.
Dialogue: 0,0:05:31.86,0:05:32.79,Default,,0,0,0,,Sendoh.
Dialogue: 0,0:05:38.57,0:05:39.24,Default,,0,0,0,,[Chết tiệt.]
Dialogue: 0,0:05:43.34,0:05:44.15,Default,,0,0,0,,Sendoh.
Dialogue: 0,0:05:46.51,0:05:48.25,Default,,0,0,0,,[Sendoh, cậu đúng là một nhân vật đáng sợ.]
Dialogue: 0,0:05:49.32,0:05:53.42,Default,,0,0,0,,[Trong tình huống thua hai điểm\Nmà chỉ còn lại năm giây,]
Dialogue: 0,0:05:53.89,0:05:55.72,Default,,0,0,0,,[vậy mà lại có thể\Ncố tình để Maki đuổi theo.]
Dialogue: 0,0:05:57.96,0:05:59.03,Default,,0,0,0,,Một phút.
Dialogue: 0,0:05:59.66,0:06:02.46,Default,,0,0,0,,[Cậu ta cố tình gài bẫy để Maki phạm lỗi\Nrồi mới ném quả bóng đó,]
Dialogue: 0,0:06:02.76,0:06:04.87,Default,,0,0,0,,[như vậy thì có thể có thêm một quả bóng phạt.]
Dialogue: 0,0:06:05.17,0:06:07.13,Default,,0,0,0,,[Điểm số là 79-80.]
Dialogue: 0,0:06:10.97,0:06:15.08,Default,,0,0,0,,[Đây là kịch bản đã được viết\Ntrong nháy mắt trong đầu của Sendoh.]
Dialogue: 0,0:06:20.88,0:06:23.35,Default,,0,0,0,,[Bản thân tên đó quá tự tin.]
Dialogue: 0,0:06:25.79,0:06:28.32,Default,,0,0,0,,[Nếu là mình thì cũng sẽ làm như vậy.]
Dialogue: 0,0:06:29.99,0:06:31.16,Default,,0,0,0,,[Lúc này, Maki mới tin tưởng rằng]
Dialogue: 0,0:06:31.28,0:06:34.78,Default,,0,0,0,,[Sendoh đã có trình độ ngang bằng với mình.]
Dialogue: 0,0:06:39.61,0:06:41.51,Default,,0,0,0,,Maki và Sendoh đều biết rõ rằng
Dialogue: 0,0:06:42.84,0:06:45.15,Default,,0,0,0,,so về khả năng tổng hợp của cả đội\Nthì ai chiếm lợi thế.
Dialogue: 0,0:06:47.21,0:06:49.38,Default,,0,0,0,,Ai sẽ là người chiến thắng cuối cùng?\NLà Sendoh tính toán quyết chiến
Dialogue: 0,0:06:50.85,0:06:54.66,Default,,0,0,0,,hay là Maki lùi một bước\Nđể lựa chọn hiệp đấu phụ?
Dialogue: 0,0:06:58.15,0:06:59.92,Default,,0,0,0,,Hai người các cậu lại tranh giành hạng nhất
Dialogue: 0,0:07:00.29,0:07:02.40,Default,,0,0,0,,khi tôi không có trên sân.
Dialogue: 0,0:07:05.73,0:07:07.00,Default,,0,0,0,,[Hiệp đấu phụ bắt đầu.]
Dialogue: 0,0:07:09.37,0:07:11.69,Default,,0,0,0,,Chưa đến cuối thì không được dễ dàng bỏ cuộc.
Dialogue: 0,0:07:11.80,0:07:13.90,Default,,0,0,0,,- Được!\N- Lên thôi.
Dialogue: 0,0:07:14.07,0:07:15.07,Default,,0,0,0,,Chắc chắn phải chiến thằng.
Dialogue: 0,0:07:19.74,0:07:23.11,Default,,0,0,0,,Ryonan, Ryonan, Ryonan cố lên!
Dialogue: 0,0:07:23.31,0:07:27.79,Default,,0,0,0,,Kainan!
Dialogue: 0,0:07:30.85,0:07:34.08,Default,,0,0,0,,Thiếu mất Uozumi, Sendoh phụ trách\Nkhống chế bóng với thân phận hậu vệ
Dialogue: 0,0:07:34.23,0:07:36.96,Default,,0,0,0,,chắc chắn sẽ cảm thấy khả năng của đội bóng\Nđã đến giới hạn.
Dialogue: 0,0:07:37.26,0:07:39.60,Default,,0,0,0,,Nhưng cậu ta\Nvẫn muốn phân cao thấp với Kainan,
Dialogue: 0,0:07:40.09,0:07:42.46,Default,,0,0,0,,thế nên ban nãy mới đặt bẫy\Nđể muốn từ đó giành chiến thắng.
Dialogue: 0,0:07:45.33,0:07:49.44,Default,,0,0,0,,Nhưng với khả năng của cả đội\Nthì có lẽ Kainan vẫn mạnh hơn.
Dialogue: 0,0:07:51.17,0:07:53.44,Default,,0,0,0,,Vậy thì huấn luyện viên không sao chứ?
Dialogue: 0,0:07:53.97,0:07:55.81,Default,,0,0,0,,Đúng vậy, tạm thời không sao cả.
Dialogue: 0,0:07:56.28,0:07:58.94,Default,,0,0,0,,Nhưng bác sĩ đã dặn\Nông ấy phải kiểm tra nhiều mặt,
Dialogue: 0,0:07:59.07,0:08:01.31,Default,,0,0,0,,chắc là phải nằm viện hai, ba ngày.
Dialogue: 0,0:08:01.51,0:08:02.94,Default,,0,0,0,,Xin lỗi các em.
Dialogue: 0,0:08:03.14,0:08:05.65,Default,,0,0,0,,Trận đấu đang căng thẳng\Nmà ông ấy lại như thế này.
Dialogue: 0,0:08:06.35,0:08:10.02,Default,,0,0,0,,Không, ngày mai huấn luyện viên\Nkhông thể đến sân được nữa ạ?
Dialogue: 0,0:08:11.75,0:08:14.02,Default,,0,0,0,,Xin lỗi, em quên tự giới thiệu.
Dialogue: 0,0:08:14.71,0:08:17.10,Default,,0,0,0,,Em là đội trưởng của đội bóng rổ, em tên Akagi.
Dialogue: 0,0:08:17.59,0:08:19.19,Default,,0,0,0,,Em là đội phó.
Dialogue: 0,0:08:19.26,0:08:23.19,Default,,0,0,0,,Em là Kogure, còn cô bé xinh đẹp này\Nlà quản lý Ayako, phải không?
Dialogue: 0,0:08:23.75,0:08:26.06,Default,,0,0,0,,Cô à, sao lại khen em xinh chứ,
Dialogue: 0,0:08:27.35,0:08:29.05,Default,,0,0,0,,lời này cũng coi như nói thật rồi.
Dialogue: 0,0:08:32.06,0:08:34.12,Default,,0,0,0,,Thỉnh thoảng cô sẽ đi xem các em thi đấu,
Dialogue: 0,0:08:34.33,0:08:36.26,Default,,0,0,0,,cô nhớ hết mặt mũi của các em.
Dialogue: 0,0:08:38.46,0:08:43.63,Default,,0,0,0,,Khi ông ấy dạy ở trường đại học,\Ncô rất ít khi nghĩ đến việc đi xem thi đấu,
Dialogue: 0,0:08:44.60,0:08:47.64,Default,,0,0,0,,nhưng gần đây ông ấy có vẻ rất vui.
Dialogue: 0,0:08:48.49,0:08:49.32,Default,,0,0,0,,[Rất vui?]
Dialogue: 0,0:08:51.09,0:08:54.83,Default,,0,0,0,,Tôi cũng không nhịn được\Nvà muốn đi xem các em thi đấu.
Dialogue: 0,0:08:55.63,0:08:59.20,Default,,0,0,0,,[Đúng rồi, nghe nói khi ở trường đại học\Nbị mọi người gọi là huấn luyện viên ác ma.]
Dialogue: 0,0:09:02.97,0:09:05.87,Default,,0,0,0,,[Có khi có thể nhân cơ hội này để hỏi rõ ràng.]
Dialogue: 0,0:09:07.34,0:09:09.67,Default,,0,0,0,,Lần này may mà có Sakuragi\Nnên ông ấy mới được cứu.
Dialogue: 0,0:09:09.91,0:09:12.89,Default,,0,0,0,,Nếu không có cậu ấy\Nthì hậu quả đúng là khó lòng tưởng tượng.
Dialogue: 0,0:09:13.41,0:09:15.16,Default,,0,0,0,,Sakuragi Hanamichi?
Dialogue: 0,0:09:15.29,0:09:16.43,Default,,0,0,0,,Sakuragi...
Dialogue: 0,0:09:17.20,0:09:20.24,Default,,0,0,0,,Nghe nói lúc phát bệnh thì ông ấy\Nđang trông chừng Sakuragi tập luyện.
Dialogue: 0,0:09:40.55,0:09:43.99,Default,,0,0,0,,Bố Già, thầy đừng chỉ đứng bên cạnh nhìn chứ,\Nmau dạy em đi,
Dialogue: 0,0:09:44.26,0:09:45.19,Default,,0,0,0,,thầy là huấn luyện viên đó.
Dialogue: 0,0:09:46.76,0:09:47.52,Default,,0,0,0,,Bố Già.
Dialogue: 0,0:09:50.83,0:09:51.59,Default,,0,0,0,,Bố Già.
Dialogue: 0,0:09:54.20,0:09:57.67,Default,,0,0,0,,Thằng bé gọi xe cấp cứu\Nvà cùng ông ấy vào bệnh viện,
Dialogue: 0,0:09:58.13,0:10:00.95,Default,,0,0,0,,sau đó nhờ người của bệnh viện gọi cho Akagi,
Dialogue: 0,0:10:01.07,0:10:03.42,Default,,0,0,0,,cậu ấy tự gọi cho cô.
Dialogue: 0,0:10:03.77,0:10:06.44,Default,,0,0,0,,Bác sĩ nói nếu lúc đó không có\Nsự xử lý dứt khoát của Sakuragi
Dialogue: 0,0:10:06.85,0:10:10.79,Default,,0,0,0,,thì e là bây giờ huấn luyện viên\Nđã khó giữ được tính mạng.
Dialogue: 0,0:10:11.34,0:10:12.24,Default,,0,0,0,,Thằng nhóc đó...
Dialogue: 0,0:10:12.98,0:10:13.91,Default,,0,0,0,,Dứt khoát...
Dialogue: 0,0:10:14.51,0:10:15.75,Default,,0,0,0,,Đúng là khó tin.
Dialogue: 0,0:11:08.50,0:11:10.00,Default,,0,0,0,,Đồ khốn, cái thằng này.
Dialogue: 0,0:11:18.74,0:11:19.91,Default,,0,0,0,,Thằng khốn.
Dialogue: 0,0:11:21.53,0:11:22.96,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:11:27.83,0:11:30.20,Default,,0,0,0,,Bốn người mà lại không thắng\Nmình tao, bọn mày có thấy mất mặt không?
Dialogue: 0,0:11:30.42,0:11:32.56,Default,,0,0,0,,Mà tao còn là học sinh cấp hai đấy.
Dialogue: 0,0:11:32.84,0:11:34.55,Default,,0,0,0,,Chẳng phải bọn mày là học sinh cấp ba à?
Dialogue: 0,0:11:49.22,0:11:51.38,Default,,0,0,0,,[Sakuragi]
Dialogue: 0,0:12:03.93,0:12:07.80,Default,,0,0,0,,Bố, bố, bố!
Dialogue: 0,0:12:09.93,0:12:12.27,Default,,0,0,0,,[Bệnh viện ở gần đây, mau đến bệnh viện.]
Dialogue: 0,0:12:22.01,0:12:24.48,Default,,0,0,0,,Tránh ra, mấy người làm gì thế hả?
Dialogue: 0,0:12:24.48,0:12:25.85,Default,,0,0,0,,Bớt càm ràm đi!
Dialogue: 0,0:12:30.45,0:12:32.75,Default,,0,0,0,,Dừng tay, bây giờ tao đang...
Dialogue: 0,0:12:33.29,0:12:36.32,Default,,0,0,0,,Ban nãy bốn người đối phó với mày mà vẫn thua,
Dialogue: 0,0:12:37.16,0:12:39.36,Default,,0,0,0,,thể nên tao mới về tìm riêng tám người đến.
Dialogue: 0,0:12:40.53,0:12:42.13,Default,,0,0,0,,Lần này bọn tao chiếm ưu thế.
Dialogue: 0,0:12:43.17,0:12:46.38,Default,,0,0,0,,Chết tiệt, bây giờ tao không có thời gian\Nđánh nhau với bọn mày!
Dialogue: 0,0:12:46.62,0:12:47.45,Default,,0,0,0,,Mau tránh ra!
Dialogue: 0,0:13:02.74,0:13:08.02,Default,,0,0,0,,Bố đã bị bệnh đến ngất đi rồi.
Dialogue: 0,0:13:08.33,0:13:09.67,Default,,0,0,0,,[Cút ra!]
Dialogue: 0,0:13:18.48,0:13:21.81,Default,,0,0,0,,[Sakuragi không cẩn thận\Nnhớ lại chuyện trước đây.]
Dialogue: 0,0:13:37.16,0:13:38.33,Default,,0,0,0,,Chuyền tốt lắm.
Dialogue: 0,0:13:46.17,0:13:47.60,Default,,0,0,0,,Vào rồi!
Dialogue: 0,0:13:49.84,0:13:52.88,Default,,0,0,0,,Như vậy thì đã chênh nhau sáu điểm,\Ncòn lại năm giây.
Dialogue: 0,0:13:55.68,0:13:57.31,Default,,0,0,0,,Dừng thời gian lại đi.
Dialogue: 0,0:14:28.58,0:14:29.35,Default,,0,0,0,,Ba...
Dialogue: 0,0:14:33.40,0:14:34.00,Default,,0,0,0,,Hai...
Dialogue: 0,0:14:41.62,0:14:42.45,Default,,0,0,0,,Một.
Dialogue: 0,0:14:51.16,0:14:52.20,Default,,0,0,0,,Trận đấu kết thúc.
Dialogue: 0,0:14:58.97,0:15:00.92,Default,,0,0,0,,Thắng rồi!
Dialogue: 0,0:15:19.39,0:15:22.19,Default,,0,0,0,,Thắng rồi, thắng rồi!
Dialogue: 0,0:15:43.05,0:15:43.86,Default,,0,0,0,,Sendoh.
Dialogue: 0,0:15:48.35,0:15:50.55,Default,,0,0,0,,Tôi khuyên thật, Shohoku rất mạnh đấy.
Dialogue: 0,0:15:51.69,0:15:53.62,Default,,0,0,0,,Maki, tôi biết điều này.
Dialogue: 0,0:15:57.80,0:16:01.83,Default,,0,0,0,,[Đội trực thuộc Đại học Kainan thắng liên tiếp hai trận đã nắm chắc\Nquyền tham gia giải đấu giữa các trường cấp ba toàn quốc.]
Dialogue: 0,0:16:02.73,0:16:06.64,Default,,0,0,0,,[Mà trận đấu giữa hai đội cùng có thành tích\Nmột thắng một thua là Shohoku và Ryonan vào ngày mai]
Dialogue: 0,0:16:07.07,0:16:10.11,Default,,0,0,0,,[sẽ trở thành trận đấu quyết định sống chết\Ngiành lấy suất tham dự còn lại.]
Dialogue: 0,0:16:28.56,0:16:30.89,Default,,0,0,0,,Đội trưởng, Kogure,\Nhuấn luyện viên thế nào rồi?
Dialogue: 0,0:16:31.76,0:16:33.36,Default,,0,0,0,,Tình huống của huấn luyện viên vẫn ổn,
Dialogue: 0,0:16:33.93,0:16:36.07,Default,,0,0,0,,cũng nhờ Sakuragi xử lý ổn thỏa\Nnên tạm thời không sao cả.
Dialogue: 0,0:16:36.10,0:16:37.77,Default,,0,0,0,,Sakuragi? Tại sao?
Dialogue: 0,0:16:37.87,0:16:38.85,Default,,0,0,0,,Đừng ồn ào,
Dialogue: 0,0:16:39.45,0:16:40.48,Default,,0,0,0,,đây là trước cửa bệnh viện đấy.
Dialogue: 0,0:16:41.52,0:16:43.47,Default,,0,0,0,,Yasuda, trận đấu thế nào?
Dialogue: 0,0:16:43.65,0:16:46.39,Default,,0,0,0,,Sau khi hiệp phụ kết thúc\Nthì Kainan giành chiến thắng,
Dialogue: 0,0:16:46.92,0:16:48.63,Default,,0,0,0,,thành tích cuối cùng là chênh nhau sáu điểm.
Dialogue: 0,0:16:50.43,0:16:52.53,Default,,0,0,0,,[Cuối cùng vẫn là Kainan thắng.]
Dialogue: 0,0:16:53.30,0:16:55.38,Default,,0,0,0,,Thật sự không thể tin được.
Dialogue: 0,0:16:55.41,0:16:56.76,Default,,0,0,0,,Trong tình huống thiếu Uozumi
Dialogue: 0,0:16:56.78,0:16:57.87,Default,,0,0,0,,mà lại có thể tiến vào hiệp phụ.
Dialogue: 0,0:16:58.09,0:17:01.06,Default,,0,0,0,,Khi trận đấu sắp kết thúc, Sendoh liên tiếp\Nném bóng giành điểm để rút ngắn khoảng cách.
Dialogue: 0,0:17:03.51,0:17:04.31,Default,,0,0,0,,Sendoh?
Dialogue: 0,0:17:05.38,0:17:06.58,Default,,0,0,0,,Cậu ta là một người đáng sợ.
Dialogue: 0,0:17:10.22,0:17:11.99,Default,,0,0,0,,Nếu Kainan giành chiến thắng
Dialogue: 0,0:17:12.50,0:17:15.11,Default,,0,0,0,,thì Kainan đã thắng hai trận liền,
Dialogue: 0,0:17:15.37,0:17:18.64,Default,,0,0,0,,Shohoku và Ryonan một thắng một thua,\Ncòn Takesato thua hai trận liền.
Dialogue: 0,0:17:20.91,0:17:23.58,Default,,0,0,0,,Nếu Kainan đã không thể thua Takesato
Dialogue: 0,0:17:24.28,0:17:26.28,Default,,0,0,0,,thì hạng nhất chắc chắn là Kainan.
Dialogue: 0,0:17:26.62,0:17:27.12,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:17:28.09,0:17:29.42,Default,,0,0,0,,Kết quả của trận đấu ngày mai
Dialogue: 0,0:17:29.45,0:17:32.29,Default,,0,0,0,,sẽ quyết định đội tham gia giải đấu\Nliên kết giữa các trường cấp ba toàn quốc.
Dialogue: 0,0:17:33.29,0:17:34.32,Default,,0,0,0,,Không phải chúng ta thì là Ryonan.
Dialogue: 0,0:17:35.00,0:17:37.80,Default,,0,0,0,,Người thắng có thể tham gia\Ngiải đấu liên kết giữa các trường cấp ba.
Dialogue: 0,0:17:39.16,0:17:41.91,Default,,0,0,0,,Tốt lắm, đơn giản như vậy là được.
Dialogue: 0,0:17:46.44,0:17:48.64,Default,,0,0,0,,Tôi tin rằng\Nbọn nhỏ chắc chắn sẽ không có vấn đề gì.
Dialogue: 0,0:17:49.28,0:17:50.78,Default,,0,0,0,,Dù ông không thể đến nơi cũng thế.
Dialogue: 0,0:17:56.62,0:17:59.39,Default,,0,0,0,,Làm ông hơi cô đơn nhỉ?
Dialogue: 0,0:18:02.47,0:18:03.13,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:18:03.31,0:18:04.35,Default,,0,0,0,,Huấn luyện viên...
Dialogue: 0,0:18:04.58,0:18:05.38,Default,,0,0,0,,Ngất vì bệnh?
Dialogue: 0,0:18:06.02,0:18:07.22,Default,,0,0,0,,Sakuragi, cậu nói thật không vậy?
Dialogue: 0,0:18:12.03,0:18:14.46,Default,,0,0,0,,- Bác sĩ nói kết quả thế nào?\N- Không biết.
Dialogue: 0,0:18:14.60,0:18:17.60,Default,,0,0,0,,Không biết? Không có trách nhiệm quá đấy!
Dialogue: 0,0:18:18.23,0:18:20.53,Default,,0,0,0,,Lúc quay về tôi không hỏi bác sĩ\Nthì sao mà biết được.
Dialogue: 0,0:18:21.44,0:18:22.60,Default,,0,0,0,,Từ từ đã, Mitchi.
Dialogue: 0,0:18:22.74,0:18:24.14,Default,,0,0,0,,Cái tên không có trách nhiệm này.
Dialogue: 0,0:18:27.41,0:18:29.94,Default,,0,0,0,,Dù sao thì tính mạng của huấn luyện viên\Ncũng không có vấn đề gì.
Dialogue: 0,0:18:30.71,0:18:33.56,Default,,0,0,0,,Tất cả là nhờ thiên tài tôi\Ncấp cứu nhanh chóng ổn thỏa.
Dialogue: 0,0:18:33.60,0:18:35.19,Default,,0,0,0,,Cậu thì là thiên tài gì chứ.
Dialogue: 0,0:18:35.50,0:18:37.90,Default,,0,0,0,,Tôi thấy chắc là cậu\Nphơi nắng dưới rổ lâu quá
Dialogue: 0,0:18:37.92,0:18:39.39,Default,,0,0,0,,nên đầu óc có vấn đề.
Dialogue: 0,0:18:40.93,0:18:42.36,Default,,0,0,0,,Nói có lý.
Dialogue: 0,0:18:43.47,0:18:45.28,Default,,0,0,0,,Rukawa chết tiệt.
Dialogue: 0,0:18:48.35,0:18:50.98,Default,,0,0,0,,Tón lại thì ngày mai Bố Già của chúng ta\Nkhông thể đến sân thi đấu,
Dialogue: 0,0:18:51.15,0:18:52.82,Default,,0,0,0,,mọi người phải liều mạng mới được.
Dialogue: 0,0:18:57.59,0:18:58.69,Default,,0,0,0,,Huấn luyện viên.
Dialogue: 0,0:19:02.93,0:19:04.23,Default,,0,0,0,,Tao phải đánh chết bọn mày!
Dialogue: 0,0:19:13.04,0:19:13.60,Default,,0,0,0,,Huấn luyện viên.
Dialogue: 0,0:19:15.25,0:19:16.35,Default,,0,0,0,,Huấn luyện viên Anzai.
Dialogue: 0,0:19:20.59,0:19:21.05,Default,,0,0,0,,Huấn luyện viên.
Dialogue: 0,0:19:23.19,0:19:24.46,Default,,0,0,0,,Ngày mai tôi chắc chắn sẽ thắng để có được\Ntư cách tham gia giải đấu giữa các trường cấp ba
Dialogue: 0,0:19:24.86,0:19:27.37,Default,,0,0,0,,làm quà thăm bệnh.
Dialogue: 0,0:19:29.43,0:19:30.30,Default,,0,0,0,,Ryonan.
Dialogue: 0,0:19:41.24,0:19:41.94,Default,,0,0,0,,Sendoh.
Dialogue: 0,0:19:42.72,0:19:45.83,Default,,0,0,0,,Xem trận đấu này như trận cuối cùng trước khi\Nnghỉ hưu của bọn họ có vẻ còn hơi sớm đấy.
Dialogue: 0,0:19:45.97,0:19:48.91,Default,,0,0,0,,Không, dù mùa hè có qua đi thì\Ntôi cũng sẽ không rút ra.
Dialogue: 0,0:19:49.22,0:19:50.12,Default,,0,0,0,,Tôi vẫn muốn tham gia vòng đấu loại.
Dialogue: 0,0:19:51.01,0:19:51.72,Default,,0,0,0,,Là vậy sao?
Dialogue: 0,0:19:51.72,0:19:54.02,Default,,0,0,0,,Làm gì vậy? Cậu có ý kiến à?
Dialogue: 0,0:19:54.60,0:19:56.73,Default,,0,0,0,,Không, không có, không có ý kiến.
Dialogue: 0,0:19:58.05,0:19:59.25,Default,,0,0,0,,Được.
Dialogue: 0,0:19:59.75,0:20:02.25,Default,,0,0,0,,Tôi phải tiếp tục\Nbuổi tập bóng ban nãy, còn 172 quả nữa,
Dialogue: 0,0:20:03.03,0:20:04.36,Default,,0,0,0,,chỉ có thể tập huấn đặc biệt.
Dialogue: 0,0:20:09.13,0:20:12.05,Default,,0,0,0,,Tốt lắm, tôi phụ trách phòng thủ nhé,\NSakuragi.
Dialogue: 0,0:20:13.73,0:20:14.53,Default,,0,0,0,,Mitchi.
Dialogue: 0,0:20:14.77,0:20:16.27,Default,,0,0,0,,Tôi phụ trách chuyền bóng cho cậu.
Dialogue: 0,0:20:17.97,0:20:21.54,Default,,0,0,0,,- Ryota.\N- Vậy để tao nói thêm mấy lời tốt đẹp cho mày.
Dialogue: 0,0:20:22.67,0:20:25.75,Default,,0,0,0,,Rukawa,\Nthằng khốn này, mày có thái độ gì vậy hả?
Dialogue: 0,0:20:25.86,0:20:27.77,Default,,0,0,0,,Mày đừng có làm ra vẻ với tao!
Dialogue: 0,0:20:29.18,0:20:30.22,Default,,0,0,0,,[Huấn luyện viên Anzai bất ngờ bị bệnh,]
Dialogue: 0,0:20:30.22,0:20:32.84,Default,,0,0,0,,[tai nạn bất ngờ này lại không\Nđánh gục sĩ khí của đội bóng rổ Shohoku]
Dialogue: 0,0:20:33.38,0:20:36.75,Default,,0,0,0,,[mà lại tăng thêm ý chí chiến đấu của bọn họ.]
Dialogue: 0,0:20:38.26,0:20:41.23,Default,,0,0,0,,[Trận đấu cuối cùng của Shohoku cũng\Nkẻ địch cũ, liên quan đến tư cách tham gia]
Dialogue: 0,0:20:41.36,0:20:44.87,Default,,0,0,0,,[giải đấu giữa các trường\Ncấp ba toàn quốc sắp sửa bắt đầu.]
Dialogue: 0,0:20:57.43,0:21:00.23,Default,,0,0,0,,♫ Trong giấc mơ nhếch nhác thảm hại ♫
Dialogue: 0,0:21:01.11,0:21:03.55,Default,,0,0,0,,♫ Tôi bỗng choàng tỉnh ♫
Dialogue: 0,0:21:05.18,0:21:09.04,Default,,0,0,0,,♫ Lại một buổi sớm với ánh nắng rực rỡ ♫
Dialogue: 0,0:21:12.83,0:21:18.62,Default,,0,0,0,,♫ Nghe bài hát mình thích ♫
Dialogue: 0,0:21:20.31,0:21:25.93,Default,,0,0,0,,♫ Mặc chiếc áo sơ mi sạch sẽ ♫
Dialogue: 0,0:21:27.15,0:21:30.14,Default,,0,0,0,,♫ Đêm qua ♫
Dialogue: 0,0:21:30.27,0:21:33.97,Default,,0,0,0,,♫ Có người nói với tôi với vẻ mệt mỏi rằng ♫
Dialogue: 0,0:21:34.14,0:21:36.34,Default,,0,0,0,,♫ Muốn tìm kiếm kích thích ♫
Dialogue: 0,0:21:36.48,0:21:38.11,Default,,0,0,0,,♫ Muốn đột phá thực tại ♫
Dialogue: 0,0:21:38.27,0:21:41.64,Default,,0,0,0,,♫ Đừng lún sâu như thế nữa ♫
Dialogue: 0,0:21:42.06,0:21:45.90,Default,,0,0,0,,♫ Hãy nắm giữ khoảnh khắc tỏa sáng ♫
Dialogue: 0,0:21:46.04,0:21:49.26,Default,,0,0,0,,♫ Tôi phải sống đúng với bản thân mình ♫
Dialogue: 0,0:21:50.17,0:21:53.95,Default,,0,0,0,,♫ Có lẽ sẽ hối hận, có lẽ không hoàn hảo ♫
Dialogue: 0,0:21:54.03,0:21:58.01,Default,,0,0,0,,♫ Nhưng đã không còn cô đơn nữa wow ♫
Dialogue: 0,0:21:58.14,0:22:05.26,Default,,0,0,0,,♫ Giọt nước mắt tràn mi\Nlại là thứ đẹp đẽ nhất ♫
Dialogue: 0,0:22:05.37,0:22:09.33,Default,,0,0,0,,♫ Tôi lại bước lên hành trình vô tận ♫
Dialogue: 0,0:22:09.42,0:22:13.47,Default,,0,0,0,,♫ Đi thẳng về phía trước,\Nkhông bao giờ lùi bước ♫
Dialogue: 0,0:22:21.25,0:22:22.68,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:24.32,0:22:25.82,Default,,0,0,0,,Hôm nay là thời khắc quan trọng.
Dialogue: 0,0:22:25.82,0:22:27.59,Default,,0,0,0,,Lần nào cũng nói như vậy.
Dialogue: 0,0:22:27.59,0:22:29.80,Default,,0,0,0,,Đồ ngu, ngày hôm nay
Dialogue: 0,0:22:29.80,0:22:31.64,Default,,0,0,0,,là quan trọng của quan trọng.
Dialogue: 0,0:22:31.64,0:22:32.84,Default,,0,0,0,,Đừng lo lắng,
Dialogue: 0,0:22:33.04,0:22:34.41,Default,,0,0,0,,bá chủ dưới rổ\Nkiêm vua bắt bóng bật bảng như tôi
Dialogue: 0,0:22:34.41,0:22:39.27,Default,,0,0,0,,đang dần thể hiện\Nsự trưởng thành cực lớn cho mọi người thấy.
Dialogue: 0,0:22:39.27,0:22:41.86,Default,,0,0,0,,Bây giờ chắc hẳn Sendoh cũng đang sợ hãi.
Dialogue: 0,0:22:41.86,0:22:43.99,Default,,0,0,0,,Để sức đó vào trận đấu đi.
Dialogue: 0,0:22:44.26,0:22:45.19,Default,,0,0,0,,"Cao thủ bóng rổ."
Dialogue: 0,0:22:45.53,0:22:48.23,Default,,0,0,0,,"Trận chiến cuối cùng!\NShohoku đấu với Ryonan."
Dialogue: 0,0:22:48.36,0:22:49.50,Default,,0,0,0,,Nhất định đừng bỏ lỡ nhé!
