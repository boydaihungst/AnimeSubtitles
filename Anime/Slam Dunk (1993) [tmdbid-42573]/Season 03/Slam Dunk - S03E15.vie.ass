Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.40,0:00:20.29,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.77,0:00:24.44,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.80,0:00:30.07,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.34,0:00:36.54,Default,,0,0,0,,♫  Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.28,0:00:44.22,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.12,0:00:50.82,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.26,0:00:57.10,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.36,0:01:02.93,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.47,0:01:10.24,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.98,0:01:19.68,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:20.15,0:01:25.76,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:25.99,0:01:31.76,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:32.13,0:01:40.51,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:56.37,0:01:57.78,Default,,0,0,0,,[Vị vua của tỉnh Kanagawa,\Ntrường cấp ba trực thuộc Đại học Kainan]
Dialogue: 0,0:01:58.79,0:02:02.59,Default,,0,0,0,,[đã đánh bại đội bóng rổ Shohoku trong trận đấu\Nđầu tiên của vòng chung kết giải đấu tỉnh.]
Dialogue: 0,0:02:02.76,0:02:05.20,Default,,0,0,0,,[Tiếp sau đó lại nhận khiêu chiến\Ntừ Ryonan trong trận đấu thứ hai.]
Dialogue: 0,0:02:12.17,0:02:14.84,Default,,0,0,0,,[Trận đấu này là trận đấu quan trọng\Ncực kỳ có sức ảnh hưởng.]
Dialogue: 0,0:02:15.21,0:02:17.78,Default,,0,0,0,,[Tình hình trận đấu vô cùng gay cấn, kéo dài tới\Nhiệp phụ mới có thể quyết định thắng bại.]
Dialogue: 0,0:02:18.31,0:02:20.21,Default,,0,0,0,,[Trường trực thuộc Đại học Kainan\Nđã đánh bại đội bóng Ryonan]
Dialogue: 0,0:02:20.61,0:02:23.55,Default,,0,0,0,,[giành được quyền đại diên tham gia\Ngiải đấu cấp ba toàn quốc với hai trận thắng.]
Dialogue: 0,0:02:26.65,0:02:29.62,Default,,0,0,0,,[Trong một diễn biến khác, bọn Akagi\Nnhận được tin huấn luyện viên Anzai ngã bệnh]
Dialogue: 0,0:02:29.72,0:02:31.32,Default,,0,0,0,,[đã tức tốc đến bệnh viên thăm,]
Dialogue: 0,0:02:31.88,0:02:33.73,Default,,0,0,0,,[được biết sau khi Hanamichi\Ncấp cứu khẩn cấp cho huấn luyện viên Anzai]
Dialogue: 0,0:02:33.78,0:02:37.09,Default,,0,0,0,,[thì đã không còn gì đáng ngại\Nmới có thể thở phào nhẹ nhõm.]
Dialogue: 0,0:02:39.16,0:02:41.59,Default,,0,0,0,,[Sau đó trận đấu quyết định\Ngương mặt đại diện cho giải đấu cấp ba,]
Dialogue: 0,0:02:41.81,0:02:47.55,Default,,0,0,0,,[trận đấu liều chết cuối cùng của Shohoku cùng\Nđối thủ không đội trời chung Ryonan sắp sửa bắt đầu.]
Dialogue: 0,0:02:47.95,0:02:55.93,Default,,0,0,0,,[Trận chiến cuối cùng!\NShohoku đấu với Ryonan]
Dialogue: 0,0:02:50.25,0:02:53.95,Default,,0,0,0,,[Trận chiến cuối cùng!\NShohoku đấu với Ryonan!]
Dialogue: 0,0:03:06.60,0:03:11.07,Default,,0,0,0,,Hôm nay đông người quá,\Ntrận đấu cuối cùng có khác.
Dialogue: 0,0:03:11.57,0:03:12.74,Default,,0,0,0,,Không biết còn chỗ không nữa.
Dialogue: 0,0:03:13.51,0:03:15.01,Default,,0,0,0,,Cậu thấy Shohoku với Ryonan,\Nđội nào sẽ thắng?
Dialogue: 0,0:03:16.05,0:03:19.39,Default,,0,0,0,,Xét tình hình thi đấu với Kainan\Nthì chắc là ngang tài ngang sức đấy.
Dialogue: 0,0:03:19.50,0:03:23.67,Default,,0,0,0,,Phải, với thực lực của họ\Nkhông phải không thể đánh bại Kainan.
Dialogue: 0,0:03:23.79,0:03:27.67,Default,,0,0,0,,Bảo hai bên ngang tài ngang sức,\Nđây là sự thật không thể phủ nhận.
Dialogue: 0,0:03:27.93,0:03:31.00,Default,,0,0,0,,- Rốt cuộc ai sẽ giành chiến thắng?\N- Khó đoán quá.
Dialogue: 0,0:03:31.18,0:03:32.90,Default,,0,0,0,,Mình thấy hồi hộp quá.
Dialogue: 0,0:03:33.32,0:03:36.08,Default,,0,0,0,,Cậu đứng đây hồi hộp cũng vô ích thôi.
Dialogue: 0,0:03:38.48,0:03:39.94,Default,,0,0,0,,Ru... ka... wa!
Dialogue: 0,0:03:40.41,0:03:44.85,Default,,0,0,0,,Rukawa! Rukawa!
Dialogue: 0,0:03:45.01,0:03:46.28,Default,,0,0,0,,Họ đang làm gì vậy?
Dialogue: 0,0:03:47.03,0:03:48.93,Default,,0,0,0,,Tránh ra! Tránh ra chút được không?
Dialogue: 0,0:03:49.93,0:03:51.17,Default,,0,0,0,,Bớt chặn đường đi.
Dialogue: 0,0:03:52.50,0:03:54.64,Default,,0,0,0,,Hình như mọi người nghiêm túc lắm.
Dialogue: 0,0:03:54.73,0:03:57.25,Default,,0,0,0,,Tại sao đội cổ động của trường chúng ta...
Dialogue: 0,0:03:57.42,0:03:59.62,Default,,0,0,0,,- Không đến gần họ thì hơn.\N- Phải.
Dialogue: 0,0:04:00.19,0:04:02.36,Default,,0,0,0,,Chào buổi sáng Haruko.
Dialogue: 0,0:04:04.09,0:04:05.20,Default,,0,0,0,,Yohei, mấy cậu tới rồi.
Dialogue: 0,0:04:05.20,0:04:06.33,Default,,0,0,0,,- Chào buổi sáng.\N- Chào buổi sáng.
Dialogue: 0,0:04:07.13,0:04:08.07,Default,,0,0,0,,Tránh xa bọn họ ra.
Dialogue: 0,0:04:10.27,0:04:12.54,Default,,0,0,0,,Bốn người lái một chiếc xe chắc đi chậm lắm.
Dialogue: 0,0:04:12.77,0:04:16.26,Default,,0,0,0,,Chậm chết đi được, chở cái thằng này\Nlà như chở năm người vậy đấy.
Dialogue: 0,0:04:16.28,0:04:16.97,Default,,0,0,0,,Nói gì vậy hả?
Dialogue: 0,0:04:19.14,0:04:21.65,Default,,0,0,0,,- Bọn mình có mang dụng cụ cổ vũ nè.\N- Hay quá.
Dialogue: 0,0:04:22.01,0:04:24.88,Default,,0,0,0,,Nghe nói bỏ đồng năm xu vào\Nthì âm thanh sẽ vang hơn đấy.
Dialogue: 0,0:04:28.32,0:04:29.58,Default,,0,0,0,,Bỏ cái gì vào vậy hả?
Dialogue: 0,0:04:29.58,0:04:31.20,Default,,0,0,0,,Bi thép, bi pachinko đó.
Dialogue: 0,0:04:35.26,0:04:37.24,Default,,0,0,0,,Ồn chết đi được, dừng lại đi!
Dialogue: 0,0:04:37.63,0:04:40.19,Default,,0,0,0,,Haruko, bọn mình đi trước nhé, tới mau đi.
Dialogue: 0,0:04:40.29,0:04:41.78,Default,,0,0,0,,Chờ... chờ mình với.
Dialogue: 0,0:04:42.81,0:04:46.09,Default,,0,0,0,,- Chúng ta cũng vào thôi, đỡ cho hết chỗ.\N- Phải đó.
Dialogue: 0,0:04:46.70,0:04:49.02,Default,,0,0,0,,Mày mang theo bi thép đến chỗ này làm gì?
Dialogue: 0,0:04:49.05,0:04:51.54,Default,,0,0,0,,Chắc là trả lại cho tiệm pachinko thôi.
Dialogue: 0,0:04:52.24,0:04:53.45,Default,,0,0,0,,Là thế à?
Dialogue: 0,0:04:53.62,0:04:55.52,Default,,0,0,0,,[Bệnh viện tổng hợp Kitamura]
Dialogue: 0,0:04:56.74,0:04:58.65,Default,,0,0,0,,Trận đấu sắp bắt đầu rồi,
Dialogue: 0,0:04:59.58,0:05:02.68,Default,,0,0,0,,tin rằng bọn nhỏ sẽ cố gắng thật tốt.
Dialogue: 0,0:05:08.82,0:05:12.49,Default,,0,0,0,,Huấn luyện viên nói một câu đi nào.
Dialogue: 0,0:05:19.17,0:05:21.37,Default,,0,0,0,,Mấy đứa rất mạnh.
Dialogue: 0,0:05:29.91,0:05:33.15,Default,,0,0,0,,[Trận đấu đầu tiên trường cấp ba trực thuộc\NĐại học Kainan đấu với đội Takesato.]
Dialogue: 0,0:05:37.69,0:05:40.39,Default,,0,0,0,,[Đội cổ vũ của trường cấp ba trực thuộc\NĐại học Kainan đã cực kỳ hưng phấn.]
Dialogue: 0,0:05:41.16,0:05:43.69,Default,,0,0,0,,Còn chưa tới một phút, phòng thủ đi.
Dialogue: 0,0:05:44.76,0:05:47.40,Default,,0,0,0,,Giơ cao tay lên,\Nđừng để đối phương ghi bàn nữa.
Dialogue: 0,0:05:47.53,0:05:50.12,Default,,0,0,0,,Cố lên! Cố lên!
Dialogue: 0,0:05:53.00,0:05:54.19,Default,,0,0,0,,Bọc hay lắm!
Dialogue: 0,0:05:54.22,0:05:56.34,Default,,0,0,0,,Nhảy cao như vậy, khó tin thật đấy.
Dialogue: 0,0:05:59.21,0:06:00.11,Default,,0,0,0,,Nhanh quá.
Dialogue: 0,0:06:00.67,0:06:01.48,Default,,0,0,0,,Hay!
Dialogue: 0,0:06:03.88,0:06:05.04,Default,,0,0,0,,Đi đi.
Dialogue: 0,0:06:10.32,0:06:13.10,Default,,0,0,0,,Nhà vô địch 17 năm liền!
Dialogue: 0,0:06:21.40,0:06:22.96,Default,,0,0,0,,Không hổ là vị vua Kainan,
Dialogue: 0,0:06:23.50,0:06:28.30,Default,,0,0,0,,thế mà có thể giành được\Nchức vô địch 17 năm liên tiếp, giỏi quá.
Dialogue: 0,0:06:29.04,0:06:32.37,Default,,0,0,0,,Trình độ của Kainan với Takesato\Nchênh lệch nhiều quá.
Dialogue: 0,0:06:32.87,0:06:34.30,Default,,0,0,0,,Đến tận lúc này đều giống như\Nchúng ta dự đoán.
Dialogue: 0,0:06:34.85,0:06:36.09,Default,,0,0,0,,Tôi thấy vấn đề nằm ở trận đấu tiếp theo.
Dialogue: 0,0:06:37.32,0:06:40.76,Default,,0,0,0,,Hai đội Shohoku với Ryonan\Nđã ép Kainan phải khổ chiến.
Dialogue: 0,0:06:41.66,0:06:44.53,Default,,0,0,0,,Tình hình cạnh tranh kịch liệt\Ngiành hạng hai như giải đấu năm nay
Dialogue: 0,0:06:44.86,0:06:46.20,Default,,0,0,0,,hiếm thấy lắm đấy.
Dialogue: 0,0:07:10.59,0:07:14.20,Default,,0,0,0,,[Trận đấu vừa rồi là 98-51]
Dialogue: 0,0:07:14.22,0:07:16.66,Default,,0,0,0,,[với chiến thắng của trường cấp ba\Ntrực thuộc Đại học Kainan.]
Dialogue: 0,0:07:18.73,0:07:20.77,Default,,0,0,0,,[Sau khi hết thời gian nghỉ ngơi]
Dialogue: 0,0:07:20.79,0:07:23.03,Default,,0,0,0,,[thì chính là trận đấu thứ hai.]
Dialogue: 0,0:07:23.40,0:07:27.64,Default,,0,0,0,,[Trường cấp ba Ryonan\Nđấu với trường cấp ba Shohoku.]
Dialogue: 0,0:07:30.81,0:07:34.55,Default,,0,0,0,,Sắp bắt đầu rồi, Ryonan, Shohoku!
Dialogue: 0,0:07:36.31,0:07:40.73,Default,,0,0,0,,- Nào, cuối cùng cũng đợi được rồi!\N- Hanamichi! - Hanamichi
Dialogue: 0,0:07:47.19,0:07:48.46,Default,,0,0,0,,Trận đấu sắp bắt đầu.
Dialogue: 0,0:07:48.59,0:07:53.66,Default,,0,0,0,,Đúng vậy, trận đấu này là trận cuối cùng\Ngiành vị trí chính thức còn lại.
Dialogue: 0,0:08:04.11,0:08:05.12,Default,,0,0,0,,Còn ba phút để tập hợp.
Dialogue: 0,0:08:05.81,0:08:06.83,Default,,0,0,0,,Tập hợp!
Dialogue: 0,0:08:09.75,0:08:10.71,Default,,0,0,0,,Tập hợp!
Dialogue: 0,0:08:17.29,0:08:20.69,Default,,0,0,0,,- Huấn luyện viên Anzai vắng mặt.\N- Thật đấy.
Dialogue: 0,0:08:21.03,0:08:23.29,Default,,0,0,0,,Nghe bảo huấn luyện viên Anzai đã ngã bệnh.
Dialogue: 0,0:08:24.73,0:08:28.63,Default,,0,0,0,,[Huấn luyện viên Anzai thân là\Ntrụ cột tinh thần của đội bóng rổ quốc gia,]
Dialogue: 0,0:08:28.90,0:08:33.54,Default,,0,0,0,,[ông ấy là trụ cột tinh thần\Ncủa tuyển thủ Shohoku.]
Dialogue: 0,0:08:33.70,0:08:34.81,Default,,0,0,0,,[Đúng là tiếc thật đấy.]
Dialogue: 0,0:08:36.01,0:08:37.88,Default,,0,0,0,,Nếu huấn luyện viên vắng mặt...
Dialogue: 0,0:08:40.14,0:08:42.03,Default,,0,0,0,,Đừng có làm mấy chuyện xui xẻo vậy chứ.
Dialogue: 0,0:09:03.40,0:09:06.20,Default,,0,0,0,,Khỏi cần nói, cứ phòng thủ kèm chặt người\Nnhư đợt trước là được.
Dialogue: 0,0:09:06.22,0:09:07.94,Default,,0,0,0,,Tất nhiên tôi sẽ kèm Uozumi.
Dialogue: 0,0:09:08.54,0:09:10.04,Default,,0,0,0,,- Miyagi, cậu kèm Uekusa.\N- Vâng.
Dialogue: 0,0:09:10.71,0:09:13.04,Default,,0,0,0,,- Mitsui phòng thủ Koshino.\N- Dễ dàng quá.
Dialogue: 0,0:09:13.31,0:09:14.71,Default,,0,0,0,,Giao Sendoh cho Rukawa.
Dialogue: 0,0:09:16.41,0:09:19.86,Default,,0,0,0,,- Thế còn em thì sao?\N- Cậu phụ trách cậu ta.
Dialogue: 0,0:09:21.54,0:09:25.06,Default,,0,0,0,,Fukuda à, được thôi.
Dialogue: 0,0:09:26.35,0:09:28.26,Default,,0,0,0,,Hôm nay huấn luyện viên vắng mặt,
Dialogue: 0,0:09:28.86,0:09:30.79,Default,,0,0,0,,chúng ta nhất định phải chém giết toàn bộ.
Dialogue: 0,0:09:51.56,0:09:54.16,Default,,0,0,0,,[Bây giờ sẽ diễn ra\Ntrận đấu thứ hai của ngày hôm nay,]
Dialogue: 0,0:09:54.55,0:09:57.75,Default,,0,0,0,,[của trường cấp ba Shohoku\Nvới trường cấp ba Ryonan.]
Dialogue: 0,0:09:57.89,0:10:00.29,Default,,0,0,0,,[Trước khi khai mạc thì tôi xin phép\Ngiới thiệu về thành viên hai đội trước.]
Dialogue: 0,0:10:01.56,0:10:04.95,Default,,0,0,0,,- Có sắp xếp như thế nữa hả?\N- Tuyệt quá.
Dialogue: 0,0:10:05.59,0:10:07.90,Default,,0,0,0,,[Mặc đồng phục màu đỏ\Nlà trường cấp ba Shohoku,]
Dialogue: 0,0:10:09.83,0:10:11.97,Default,,0,0,0,,[số 4 Akagi Takenori.]
Dialogue: 0,0:10:10.52,0:10:12.52,Default,,0,0,0,,[Số 4 Akagi Takenori]
Dialogue: 0,0:10:16.30,0:10:18.77,Default,,0,0,0,,- Hay lắm Tinh Tinh Bự!\N- Anh ơi!
Dialogue: 0,0:10:24.65,0:10:26.58,Default,,0,0,0,,Hôm nay huấn luyện viên Anzai\Nkhông tới xem trận đấu này,
Dialogue: 0,0:10:27.21,0:10:30.05,Default,,0,0,0,,cũng có nghĩa là khảo nghiệm\Nnăng lực lãnh đạo của Akagi.
Dialogue: 0,0:10:30.78,0:10:32.31,Default,,0,0,0,,Trong tình huống\Nkhông có mặt huấn luyện viên
Dialogue: 0,0:10:32.34,0:10:34.42,Default,,0,0,0,,thì ngoài chơi bóng
Dialogue: 0,0:10:34.66,0:10:37.36,Default,,0,0,0,,còn cần phải chỉ huy cả đội bóng,\Nđây là một nhiệm vụ có độ khó cao.
Dialogue: 0,0:10:37.49,0:10:38.46,Default,,0,0,0,,Đúng là không đơn giản chút nào.
Dialogue: 0,0:10:38.73,0:10:40.86,Default,,0,0,0,,Hẳn là cái chân bị thương\Ncủa anh ta chưa khỏi hoàn toàn,
Dialogue: 0,0:10:41.56,0:10:43.40,Default,,0,0,0,,dưới tình hình bất lợi như vậy
Dialogue: 0,0:10:43.70,0:10:46.83,Default,,0,0,0,,trận đấu này là một\Nkhảo nghiệm khó khăn cho Akagi.
Dialogue: 0,0:10:47.47,0:10:49.84,Default,,0,0,0,,- Akagi cố lên, trông cậy vào cậu đấy.\N- Được.
Dialogue: 0,0:10:53.41,0:10:54.64,Default,,0,0,0,,[Mình vẫn chưa muốn kết thúc,]
Dialogue: 0,0:10:56.14,0:10:59.38,Default,,0,0,0,,[mình còn muốn chơi thêm\Nvài trận với đội hình này.]
Dialogue: 0,0:11:01.12,0:11:03.52,Default,,0,0,0,,[Số 7 Miyagi Ryota.]
Dialogue: 0,0:11:02.36,0:11:04.03,Default,,0,0,0,,[Số 7 Miyagi Ryota]
Dialogue: 0,0:11:07.75,0:11:09.42,Default,,0,0,0,,- Ryota, trông cậy vào cậu đấy.\N- Miyagi!
Dialogue: 0,0:11:13.19,0:11:14.80,Default,,0,0,0,,Phải tiến tới giải toàn quốc Ryota.
Dialogue: 0,0:11:16.30,0:11:17.77,Default,,0,0,0,,Cứ giao cho tôi Ayako.
Dialogue: 0,0:11:22.40,0:11:23.04,Default,,0,0,0,,[Số 10...]
Dialogue: 0,0:11:24.24,0:11:25.11,Default,,0,0,0,,Là Hanamichi kìa.
Dialogue: 0,0:11:25.27,0:11:26.91,Default,,0,0,0,,[Sakuragi Hanamichi.]
Dialogue: 0,0:11:25.57,0:11:27.14,Default,,0,0,0,,[Số 10 Sakuragi Hanamichi]
Dialogue: 0,0:11:27.57,0:11:30.24,Default,,0,0,0,,Hay lắm, Đầu Đinh Đỏ làm màu ra sân rồi.
Dialogue: 0,0:11:32.08,0:11:33.26,Default,,0,0,0,,Được yêu thích quá nhỉ.
Dialogue: 0,0:11:33.28,0:11:35.35,Default,,0,0,0,,Cậu phải biết là cậu ta rất có sức ảnh hưởng.
Dialogue: 0,0:11:35.42,0:11:37.28,Default,,0,0,0,,Nhưng đâu có thực lực đâu.
Dialogue: 0,0:11:37.31,0:11:41.31,Default,,0,0,0,,Tuyệt quá,\Nkhông ngờ Sakuragi lại nổi tiếng như thế.
Dialogue: 0,0:11:41.50,0:11:43.30,Default,,0,0,0,,Phải, làm màu mà nổi luôn đó.
Dialogue: 0,0:11:43.45,0:11:45.05,Default,,0,0,0,,Hanamichi quả nhiên\Nkhông phải kẻ tầm thường.
Dialogue: 0,0:11:49.99,0:11:52.13,Default,,0,0,0,,Không được,
Dialogue: 0,0:11:55.54,0:12:00.11,Default,,0,0,0,,mình muốn có sắp xếp đặc biệt hơn\Ncho thiên tài ra sân.
Dialogue: 0,0:12:00.58,0:12:02.05,Default,,0,0,0,,Như vậy cảm thấy không đủ.
Dialogue: 0,0:12:02.44,0:12:07.18,Default,,0,0,0,,[Trước đây không lâu còn nghĩ\Núp rổ sẽ bị đập đầu vào bảng.]
Dialogue: 0,0:12:08.78,0:12:10.68,Default,,0,0,0,,[Sakuragi đỉnh thật đấy.]
Dialogue: 0,0:12:11.09,0:12:13.12,Default,,0,0,0,,Sakuragi cố lên!
Dialogue: 0,0:12:13.82,0:12:16.11,Default,,0,0,0,,[Haruko cất công đến đây\Nxem mình chơi bóng à?]
Dialogue: 0,0:12:16.19,0:12:20.36,Default,,0,0,0,,[Đến xem Sakuragi, kẻ khiến toàn bộ khán giả\Nđiên cuồng chơi bóng à?]
Dialogue: 0,0:12:23.43,0:12:25.97,Default,,0,0,0,,[Số 11, Rukawa Kaede.]
Dialogue: 0,0:12:24.34,0:12:26.11,Default,,0,0,0,,[Số 11 Rukawa Kaede]
Dialogue: 0,0:12:26.47,0:12:31.37,Default,,0,0,0,,Rukawa! Rukawa!
Dialogue: 0,0:12:31.47,0:12:34.14,Default,,0,0,0,,Có hơi lố sẽ trở nên kỳ quặc đấy.
Dialogue: 0,0:12:34.14,0:12:36.14,Default,,0,0,0,,Không phải cậu vốn muốn trà trộn vào à?
Dialogue: 0,0:12:36.14,0:12:38.95,Default,,0,0,0,,Anh Rukawa! Anh Rukawa! Cố lên!
Dialogue: 0,0:12:39.35,0:12:41.85,Default,,0,0,0,,Đồ khốn, cút về đi.
Dialogue: 0,0:12:45.95,0:12:48.96,Default,,0,0,0,,Khí thế của Rukawa hôm nay nghiêm túc quá.
Dialogue: 0,0:12:49.36,0:12:52.26,Default,,0,0,0,,Phải, đến giờ tôi còn chưa dám\Nchào hỏi cậu ấy đấy.
Dialogue: 0,0:12:52.89,0:12:54.66,Default,,0,0,0,,Sau trận đấu giao hữu đó
Dialogue: 0,0:12:55.20,0:12:58.77,Default,,0,0,0,,chắc chắn cậu ấy đã xem Sendoh là đối thủ\Nkhông đội trời chung mà mình phải đánh bại.
Dialogue: 0,0:12:59.57,0:13:03.60,Default,,0,0,0,,Dù sao thì Sendoh cũng là người đầu tiên\Nkhiến cậu ấy nếm phải mùi vị thất bại.
Dialogue: 0,0:13:07.68,0:13:10.38,Default,,0,0,0,,[Số 14, Mitsui Hisashi.]
Dialogue: 0,0:13:08.80,0:13:10.30,Default,,0,0,0,,[Số 14 Mitsui Hisashi]
Dialogue: 0,0:13:10.44,0:13:12.70,Default,,0,0,0,,Mitchi!
Dialogue: 0,0:13:12.72,0:13:14.62,Default,,0,0,0,,Dừng lại đi, ghê quá.
Dialogue: 0,0:13:14.95,0:13:17.48,Default,,0,0,0,,- Mitsui, trông cậy vào cậu đấy.\N- Cố lên, Mitsui.
Dialogue: 0,0:13:21.26,0:13:21.99,Default,,0,0,0,,[Huấn luyện viên Anzai,]
Dialogue: 0,0:13:22.59,0:13:24.90,Default,,0,0,0,,[sự bồi thượng lớn nhất mà em có thể trả cho họ]
Dialogue: 0,0:13:25.11,0:13:27.09,Default,,0,0,0,,[chính là dẫn họ vào giải đấu toàn quốc.]
Dialogue: 0,0:13:28.16,0:13:30.59,Default,,0,0,0,,- Đừng lạy nữa.\N- Huấn luyện viên Anzai còn sống mà.
Dialogue: 0,0:13:33.75,0:13:36.47,Default,,0,0,0,,Shohoku! Shohoku!
Dialogue: 0,0:13:36.49,0:13:39.09,Default,,0,0,0,,Shohoku! Shohoku!
Dialogue: 0,0:13:39.11,0:13:42.71,Default,,0,0,0,,Shohoku! Shohoku!
Dialogue: 0,0:13:43.61,0:13:46.18,Default,,0,0,0,,[Mitsui, Miyagi và cả Rukawa.]
Dialogue: 0,0:13:46.55,0:13:48.99,Default,,0,0,0,,[Đây đều là những nhân tài\Nmà khi ấy mình muốn kéo vào.]
Dialogue: 0,0:13:49.64,0:13:53.58,Default,,0,0,0,,[Tiếp theo xin giới thiệu\Ntrường cấp ba Ryonan mặc áo màu trắng.]
Dialogue: 0,0:13:55.08,0:13:57.22,Default,,0,0,0,,[Số 4, Uozumi Jun.]
Dialogue: 0,0:13:55.74,0:13:57.24,Default,,0,0,0,,[Số 4 Uozumi Jun]
Dialogue: 0,0:13:57.96,0:14:00.67,Default,,0,0,0,,Người cao to đen hôi kia là Uozumi.
Dialogue: 0,0:14:01.16,0:14:02.16,Default,,0,0,0,,Cao quá.
Dialogue: 0,0:14:02.83,0:14:05.17,Default,,0,0,0,,Trông Uozumi tràn đầy ý chí chiến đấu kìa.
Dialogue: 0,0:14:09.88,0:14:11.11,Default,,0,0,0,,[Ba năm trước tính từ lúc này]
Dialogue: 0,0:14:11.58,0:14:13.91,Default,,0,0,0,,[khi Uozumi quyết định đến Ryonan]
Dialogue: 0,0:14:14.32,0:14:16.05,Default,,0,0,0,,[là mình đã biết tham gia giải đấu toàn quốc\Nkhông còn là mơ ước nữa.]
Dialogue: 0,0:14:16.82,0:14:20.59,Default,,0,0,0,,[Học sinh cấp ba cao nhất tỉnh đến Ryonan chúng tôi\Nđược xưng là Kẻ khổng lồ giới cấp hai,]
Dialogue: 0,0:14:20.72,0:14:22.19,Default,,0,0,0,,[làm rúng động giới bóng rổ thiếu niên.]
Dialogue: 0,0:14:22.36,0:14:24.18,Default,,0,0,0,,[Từ lúc đó]
Dialogue: 0,0:14:24.20,0:14:27.86,Default,,0,0,0,,[mình đã bắt đầu tích cực chiêu mộ lính,]
Dialogue: 0,0:14:28.76,0:14:30.90,Default,,0,0,0,,[khi Uozumi lên đến lớp 12\Nthì chính là mình thực hiện mơ ước.]
Dialogue: 0,0:14:31.23,0:14:33.21,Default,,0,0,0,,[Nếu có thể giành được Mitsui MVP]
Dialogue: 0,0:14:33.23,0:14:35.20,Default,,0,0,0,,[thì có thể tạo ra một cặp đôi vô địch.]
Dialogue: 0,0:14:40.54,0:14:41.58,Default,,0,0,0,,[Thất bại.]
Dialogue: 0,0:14:42.18,0:14:43.68,Default,,0,0,0,,[Năm sau]
Dialogue: 0,0:14:45.21,0:14:49.08,Default,,0,0,0,,[Mình cần một hậu vệ ghi điểm để bắt cặp\Nvới Uozumi làm trụ cột của đội bóng.]
Dialogue: 0,0:14:49.52,0:14:52.29,Default,,0,0,0,,[Miyagi Ryota tuy không cao]
Dialogue: 0,0:14:52.52,0:14:54.05,Default,,0,0,0,,[nhưng thần kinh vận động và\Nnăng lực phản ứng của cậu ta cực kỳ vượt trội.]
Dialogue: 0,0:14:59.56,0:15:00.86,Default,,0,0,0,,[Thất bại.]
Dialogue: 0,0:15:01.26,0:15:03.06,Default,,0,0,0,,[Một năm tiếp nữa]
Dialogue: 0,0:15:04.10,0:15:06.50,Default,,0,0,0,,[Rukawa Kaede của trường cấp hai Tomigaoka,]
Dialogue: 0,0:15:06.53,0:15:09.57,Default,,0,0,0,,[cậu ta nhất định là nhân tài mười năm có một.]
Dialogue: 0,0:15:09.80,0:15:11.74,Default,,0,0,0,,Cái gì? Muốn đến Shohoku?
Dialogue: 0,0:15:12.61,0:15:14.91,Default,,0,0,0,,Tại sao? Vì huấn luyện viên Anzai?
Dialogue: 0,0:15:16.11,0:15:17.71,Default,,0,0,0,,Tại sao?
Dialogue: 0,0:15:18.85,0:15:19.85,Default,,0,0,0,,Vì gần.
Dialogue: 0,0:15:21.85,0:15:23.02,Default,,0,0,0,,[Thất bại.]
Dialogue: 0,0:15:24.42,0:15:26.09,Default,,0,0,0,,[Nếu mình tổ hợp thành công]
Dialogue: 0,0:15:26.52,0:15:29.42,Default,,0,0,0,,[thì có thể tạo thành\Nmột đội bóng nghe đến là tái mặt.]
Dialogue: 0,0:15:32.13,0:15:34.03,Default,,0,0,0,,[Chuyện quá khứ sao cũng được,]
Dialogue: 0,0:15:34.26,0:15:35.56,Default,,0,0,0,,[mình tin đội bóng bây giờ]
Dialogue: 0,0:15:35.59,0:15:38.50,Default,,0,0,0,,[nhất định có thể đánh bại\Ný tưởng trước kia của mình.]
Dialogue: 0,0:15:39.80,0:15:42.33,Default,,0,0,0,,[Số 6, Koshino Hiroaki.]
Dialogue: 0,0:15:40.68,0:15:42.35,Default,,0,0,0,,[Số 6 Koshino Hiroaki]
Dialogue: 0,0:15:45.67,0:15:47.47,Default,,0,0,0,,Bạn Koshino, thấy cậu rồi.
Dialogue: 0,0:15:50.89,0:15:52.86,Default,,0,0,0,,[Cá tính của Koshino rất mạnh,]
Dialogue: 0,0:15:52.88,0:15:54.86,Default,,0,0,0,,[có thể dẫn dắt bầu không khí cả đội.]
Dialogue: 0,0:15:55.56,0:15:58.14,Default,,0,0,0,,[Số 8, Uekusa Tomoyuki.]
Dialogue: 0,0:15:56.72,0:15:58.16,Default,,0,0,0,,[Số 8 Uekusa Tomoyuki
Dialogue: 0,0:15:58.86,0:15:59.86,Default,,0,0,0,,[Sau đó là Uekusa,]
Dialogue: 0,0:16:00.19,0:16:02.97,Default,,0,0,0,,[tuy cậu ấy không phong cách như Miyagi\Nnhưng cậu ấy hiểu rõ bóng rổ như lòng bàn tay.]
Dialogue: 0,0:16:03.00,0:16:05.00,Default,,0,0,0,,[Là một hậu vệ ghi điểm xuất sắc\Nkhông hề phạm lỗi.]
Dialogue: 0,0:16:05.47,0:16:09.40,Default,,0,0,0,,[Bây giờ hai người họ đã trở thành\Nnhân vật không thể thiếu của Ryonan.]
Dialogue: 0,0:16:10.24,0:16:10.94,Default,,0,0,0,,[Số 7...]
Dialogue: 0,0:16:12.67,0:16:17.00,Default,,0,0,0,,Sendoh!
Dialogue: 0,0:16:17.09,0:16:18.60,Default,,0,0,0,,[Số 7 Sendoh Akira]
Dialogue: 0,0:16:17.23,0:16:18.61,Default,,0,0,0,,[Sendoh Akira.]
Dialogue: 0,0:16:21.38,0:16:25.32,Default,,0,0,0,,- Tiếng hoan hô to quá.\N- Tiếng hoan hô của Uozumi to hơn.
Dialogue: 0,0:16:25.44,0:16:28.91,Default,,0,0,0,,Cậu ta với Maki có thực lực ngang nhau\Nnên cũng nhanh chóng nổi tiếng.
Dialogue: 0,0:16:29.01,0:16:32.31,Default,,0,0,0,,- Đúng chứ Maki?\N- Cậu ta ngang tài với em.
Dialogue: 0,0:16:42.45,0:16:44.12,Default,,0,0,0,,[Ánh mắt sắc bén quá,]
Dialogue: 0,0:16:44.29,0:16:47.89,Default,,0,0,0,,[mình phải cẩn thận đối phó\Nvới anh chàng lạnh lùng này mới được.]
Dialogue: 0,0:16:48.13,0:16:50.06,Default,,0,0,0,,Tôi chờ anh lâu lắm rồi đấy Sendoh.
Dialogue: 0,0:16:50.08,0:16:52.32,Default,,0,0,0,,Anh nhất định sẽ bại bởi tay tôi.
Dialogue: 0,0:16:54.16,0:16:55.03,Default,,0,0,0,,Xin lỗi.
Dialogue: 0,0:16:58.77,0:16:59.70,Default,,0,0,0,,[Cậu ta vẫn thế.]
Dialogue: 0,0:17:04.17,0:17:06.71,Default,,0,0,0,,[Số 13, Fukuda Kitcho.]
Dialogue: 0,0:17:05.42,0:17:06.75,Default,,0,0,0,,[Số 13 Fukuda Kitcho]
Dialogue: 0,0:17:14.69,0:17:15.55,Default,,0,0,0,,[Sau đó,]
Dialogue: 0,0:17:16.55,0:17:20.56,Default,,0,0,0,,[đội hình Uozumi, Sendoh cộng với Fukuda]
Dialogue: 0,0:17:21.56,0:17:24.23,Default,,0,0,0,,[không nghi ngờ gì là tổ hợp mạnh nhất cả tỉnh.]
Dialogue: 0,0:17:27.60,0:17:29.77,Default,,0,0,0,,[Shohoku với Ryonan đã từng ép vị vua\Ngiành được chức vô địch 17 năm liên tiếp]
Dialogue: 0,0:17:29.87,0:17:32.84,Default,,0,0,0,,[trường cấp ba trực thuộc\NĐại học Kainan phải khổ chiến.]
Dialogue: 0,0:17:33.27,0:17:38.74,Default,,0,0,0,,[Bây giờ hai bên tranh hùng\Nkhó mà biết ai thua ai thắng.]
Dialogue: 0,0:17:39.28,0:17:42.71,Default,,0,0,0,,[Nhưng mình có thể chắc rằng\Ntrận đấu cuối cùng của vòng chung kết này]
Dialogue: 0,0:17:42.95,0:17:43.91,Default,,0,0,0,,[sẽ không phụ sự mong đợi của khán giả.]
Dialogue: 0,0:17:45.38,0:17:49.62,Default,,0,0,0,,[Bây giờ trận đấu của Shohoku\Nvới Ryonan sẽ chính thức bắt đầu]
Dialogue: 0,0:17:54.89,0:17:57.60,Default,,0,0,0,,[Trung phong đứng đầu\Ncả tỉnh Kanagawa là cậu hay là tôi?]
Dialogue: 0,0:17:58.16,0:18:00.16,Default,,0,0,0,,[Cùng với quyền đại diện tham gia\Ngiải đấu toàn quốc sẽ thuộc về ai?]
Dialogue: 0,0:18:00.90,0:18:02.53,Default,,0,0,0,,[Akagi, trận đấu này đối với chúng ta]
Dialogue: 0,0:18:02.63,0:18:06.40,Default,,0,0,0,,[là một trận đấu cuối cùng\Nđã đặt cược cả ba năm.]
Dialogue: 0,0:18:07.74,0:18:08.35,Default,,0,0,0,,[Uozumi.]
Dialogue: 0,0:18:12.35,0:18:13.95,Default,,0,0,0,,Được rồi, sắp bắt đầu.
Dialogue: 0,0:18:25.33,0:18:26.77,Default,,0,0,0,,Akagi nhảy giành bóng thua rồi.
Dialogue: 0,0:18:27.05,0:18:28.49,Default,,0,0,0,,[Anh ấy vẫn chưa vào trạng thái.]
Dialogue: 0,0:18:33.73,0:18:35.80,Default,,0,0,0,,Rukawa mạnh mẽ thế.
Dialogue: 0,0:18:36.47,0:18:37.10,Default,,0,0,0,,Rukawa...
Dialogue: 0,0:18:46.84,0:18:47.51,Default,,0,0,0,,Tốt lắm!
Dialogue: 0,0:18:53.00,0:18:56.26,Default,,0,0,0,,Tôi là thiên tài Sakuragi.
Dialogue: 0,0:19:01.51,0:19:03.41,Default,,0,0,0,,Tính vào rổ, Ryonan ghi điểm.
Dialogue: 0,0:19:07.44,0:19:08.65,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:19:08.67,0:19:11.62,Default,,0,0,0,,Tại sao lại tính họ đạt điểm?\NBóng chưa vào rổ mà.
Dialogue: 0,0:19:11.65,0:19:12.71,Default,,0,0,0,,Hanamichi, đừng nói nữa.
Dialogue: 0,0:19:13.86,0:19:16.26,Default,,0,0,0,,- Tại sao?\N- Ồn chết đi được, đồ ngu.
Dialogue: 0,0:19:17.53,0:19:19.74,Default,,0,0,0,,Sẽ có cùng kết cục\Nnhư cái tên cao hai mét kia đấy.
Dialogue: 0,0:19:28.98,0:19:32.15,Default,,0,0,0,,Nếu muốn rời sân thì tao sao cũng được.
Dialogue: 0,0:19:32.18,0:19:35.76,Default,,0,0,0,,Nói gì vậy hả? Trông tao giống\Ncái loại ngu ngốc
Dialogue: 0,0:19:35.78,0:19:39.71,Default,,0,0,0,,hay chống đối trọng tài để bị ép rời sân lắm à?\NTao không phải đồ ngu để bị phạt rời sân đâu.
Dialogue: 0,0:19:40.12,0:19:45.06,Default,,0,0,0,,[Tên nhóc đáng ghét,\Nkhông thể tha thứ, mấy đứa này ồn quá.]
Dialogue: 0,0:19:47.19,0:19:48.03,Default,,0,0,0,,[Nhớ ra thì]
Dialogue: 0,0:19:50.66,0:19:51.91,Default,,0,0,0,,[trong trận đấu bóng rổ trường cấp ba]
Dialogue: 0,0:19:51.93,0:19:54.30,Default,,0,0,0,,[đây là lần đầu nhìn thấy\Ncó người phạm lỗi cản trở.]
Dialogue: 0,0:19:55.24,0:19:57.31,Default,,0,0,0,,Lỗi cản trở ghi điểm...
Dialogue: 0,0:19:57.34,0:19:59.64,Default,,0,0,0,,Aida, chị không biết à?
Dialogue: 0,0:20:00.17,0:20:03.28,Default,,0,0,0,,Khi bên tấn công ném vào rổ thì trước khi\Nbóng rơi xuống từ đỉnh đường ném
Dialogue: 0,0:20:03.74,0:20:05.95,Default,,0,0,0,,đập vào bảng thì bên phòng thủ\Nkhông được chạm vào bóng.
Dialogue: 0,0:20:06.38,0:20:09.18,Default,,0,0,0,,Nếu không thì mặc kệ bóng có vào\Nhay không đều được tính điểm.
Dialogue: 0,0:20:09.22,0:20:11.02,Default,,0,0,0,,Đây là kiến thức cơ bản trong bóng rổ.
Dialogue: 0,0:20:11.95,0:20:13.42,Default,,0,0,0,,Sao tôi không biết được chứ?
Dialogue: 0,0:20:14.79,0:20:18.35,Default,,0,0,0,,Cầu thủ cấp ba bình thường\Ncho dù muốn phạm lỗi này
Dialogue: 0,0:20:18.39,0:20:20.19,Default,,0,0,0,,cũng không phải tùy tiện là thực hiện được.
Dialogue: 0,0:20:21.38,0:20:23.33,Default,,0,0,0,,Năng lực bậc nhảy của cậu ta
Dialogue: 0,0:20:23.36,0:20:25.31,Default,,0,0,0,,đã vượt qua trình độ của học sinh cấp ba rồi.
Dialogue: 0,0:20:27.21,0:20:28.18,Default,,0,0,0,,[Tên nhóc đó...]
Dialogue: 0,0:20:34.02,0:20:36.02,Default,,0,0,0,,[Shohoku đối đầu với Ryonan,]
Dialogue: 0,0:20:36.89,0:20:40.16,Default,,0,0,0,,[trận đấu này giành lấy vị trí đại diện\Ncuối cùng cho giải đấu cấp ba.]
Dialogue: 0,0:20:40.76,0:20:44.43,Default,,0,0,0,,[Một màn vừa nãy đã xuất hiện cao trào.]
Dialogue: 0,0:20:57.54,0:21:00.50,Default,,0,0,0,,♫ Trong giấc mơ nhếch nhác thảm hại ♫
Dialogue: 0,0:21:01.37,0:21:03.39,Default,,0,0,0,,♫ Tôi bỗng choàng tỉnh ♫
Dialogue: 0,0:21:05.13,0:21:09.01,Default,,0,0,0,,♫ Lại một buổi sớm với ánh nắng rực rỡ ♫
Dialogue: 0,0:21:12.78,0:21:18.93,Default,,0,0,0,,♫ Nghe bài hát mình thích ♫
Dialogue: 0,0:21:20.24,0:21:25.85,Default,,0,0,0,,♫ Mặc chiếc áo sơ mi sạch sẽ ♫
Dialogue: 0,0:21:27.47,0:21:30.07,Default,,0,0,0,,♫ Đêm qua ♫
Dialogue: 0,0:21:30.61,0:21:33.72,Default,,0,0,0,,♫ Có người nói với tôi với vẻ mệt mỏi rằng ♫
Dialogue: 0,0:21:34.19,0:21:36.18,Default,,0,0,0,,♫ Muốn tìm kiếm kích thích ♫
Dialogue: 0,0:21:36.30,0:21:41.96,Default,,0,0,0,,♫ Muốn đột phá thực tại ♫
Dialogue: 0,0:21:42.05,0:21:44.32,Default,,0,0,0,,♫ Đừng lún sâu như thế nữa ♫
Dialogue: 0,0:21:44.51,0:21:46.34,Default,,0,0,0,,♫ Hãy nắm giữ khoảnh khắc tỏa sáng ♫
Dialogue: 0,0:21:46.44,0:21:49.58,Default,,0,0,0,,♫ Tôi phải sống đúng với bản thân mình ♫
Dialogue: 0,0:21:50.23,0:21:53.84,Default,,0,0,0,,♫ Có lẽ sẽ hối hận, có lẽ không hoàn hảo ♫
Dialogue: 0,0:21:53.95,0:21:58.02,Default,,0,0,0,,♫ Nhưng đã không còn cô đơn nữa wow ♫
Dialogue: 0,0:21:58.16,0:22:05.32,Default,,0,0,0,,♫ Giọt nước mắt tràn mi\Nlại là thứ đẹp đẽ nhất ♫
Dialogue: 0,0:22:05.44,0:22:09.37,Default,,0,0,0,,♫ Tôi lại bước lên hành trình vô tận ♫
Dialogue: 0,0:22:09.47,0:22:13.51,Default,,0,0,0,,♫ Đi thẳng về phía trước,\Nkhông bao giờ lùi bước ♫
Dialogue: 0,0:22:20.95,0:22:22.95,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:24.45,0:22:25.52,Default,,0,0,0,,Cái tên này...
Dialogue: 0,0:22:26.32,0:22:30.03,Default,,0,0,0,,Lúc đấu với Kainan chỉ biết\Núp rổ và dẫn bóng vào rổ.
Dialogue: 0,0:22:30.43,0:22:31.63,Default,,0,0,0,,Trong khoảng thời gian ngắn này
Dialogue: 0,0:22:32.09,0:22:34.33,Default,,0,0,0,,mà đã học được cách ném vào rổ à?
Dialogue: 0,0:22:34.72,0:22:35.55,Default,,0,0,0,,Không thể nào.
Dialogue: 0,0:22:36.35,0:22:38.29,Default,,0,0,0,,Sốt ruột chứ, đại ca Khỉ?
Dialogue: 0,0:22:38.88,0:22:42.67,Default,,0,0,0,,Tốt nhất đừng đo lường thiên tài tôi đây\Nbằng thường thức của anh.
Dialogue: 0,0:22:42.77,0:22:44.24,Default,,0,0,0,,Nói rõ cho mà nghe.
Dialogue: 0,0:22:44.71,0:22:45.38,Default,,0,0,0,,"Cao thủ bóng rổ."
Dialogue: 0,0:22:45.85,0:22:48.22,Default,,0,0,0,,"Đấng cứu thế!? Sakuragi Hanamichi."
Dialogue: 0,0:22:48.72,0:22:49.62,Default,,0,0,0,,Nhất định đừng bỏ lỡ nhé!
