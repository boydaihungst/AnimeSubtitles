Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.89,0:00:20.80,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.87,0:00:24.12,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.79,0:00:30.31,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.26,0:00:36.30,Default,,0,0,0,,♫ Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.34,0:00:44.18,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:44.98,0:00:50.98,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.17,0:00:56.98,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.07,0:01:03.05,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.14,0:01:09.88,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.82,0:01:19.77,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:19.89,0:01:25.92,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.06,0:01:31.83,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:31.93,0:01:40.33,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:57.85,0:02:00.48,Default,,0,0,0,,[Đối thủ cũ của đội Shohoku - đội Ryonan]
Dialogue: 0,0:02:00.61,0:02:02.65,Default,,0,0,0,,[chiến đấu với vị vua của Kanagawa,\Nđội Kainan.]
Dialogue: 0,0:02:02.85,0:02:07.00,Default,,0,0,0,,[Nhờ Sendoh và Fukuda tấn công mạnh mẽ\Nmà vẫn luôn dẫn trước.]
Dialogue: 0,0:02:07.09,0:02:10.04,Default,,0,0,0,,[Sau đó tiến vào nửa sau trận đấu,\NKainan phát huy thực lực vốn có của mình.]
Dialogue: 0,0:02:10.13,0:02:12.61,Default,,0,0,0,,[Kéo gần khoảng cách điểm số.]
Dialogue: 0,0:02:19.66,0:02:23.66,Default,,0,0,0,,[Thế là Ryonan đổi Fukuda\Ncó điểm yếu chí mạng về phòng thủ ra,]
Dialogue: 0,0:02:23.78,0:02:26.31,Default,,0,0,0,,[Tăng cường phòng thủ, nhưng mà...]
Dialogue: 0,0:02:28.15,0:02:29.06,Default,,0,0,0,,Takasago.
Dialogue: 0,0:02:30.55,0:02:32.40,Default,,0,0,0,,- Cậu phải kèm chặt Uozumi đó.\N- Vâng.
Dialogue: 0,0:02:32.56,0:02:35.28,Default,,0,0,0,,- Đuổi cậu ta khỏi sân.\N- Vâng.
Dialogue: 0,0:02:39.68,0:02:42.13,Default,,0,0,0,,- Số 4 của Ryonan phạm lỗi.\N- Cái gì?
Dialogue: 0,0:02:42.22,0:02:44.38,Default,,0,0,0,,Lần thứ tư rồi, Uozumi phạm lỗi lần thứ tư rồi.
Dialogue: 0,0:02:44.72,0:02:47.13,Default,,0,0,0,,Đợi đã, ông nói tôi phạm lỗi, rốt cuộc là...
Dialogue: 0,0:02:48.03,0:02:49.09,Default,,0,0,0,,Uozumi, im miệng.
Dialogue: 0,0:02:49.37,0:02:50.80,Default,,0,0,0,,Tôi chỉ đứng đấy thôi mà.
Dialogue: 0,0:02:50.92,0:02:54.10,Default,,0,0,0,,Tại sao nói tôi phạm lỗi,\Nông xem cho rõ hộ tôi đi chứ.
Dialogue: 0,0:02:55.86,0:02:58.08,Default,,0,0,0,,Số 4 của đội áo xanh phạm lỗi kĩ thuật.
Dialogue: 0,0:03:02.53,0:03:06.30,Default,,0,0,0,,[Uozumi kháng nghị phán quyết của trọng tài,\Nngược lại lại bị phán phạm lỗi kĩ thuật.]
Dialogue: 0,0:03:06.54,0:03:08.33,Default,,0,0,0,,[Do đó phạm lỗi năm lần, bị đuổi ra khỏi sân.]
Dialogue: 0,0:03:11.58,0:03:12.63,Default,,0,0,0,,[Còn lại bảy phút.]
Dialogue: 0,0:03:13.31,0:03:17.71,Default,,0,0,0,,[Tình thế làm cho Ryonan phải khổ chiến\Ntrong khi mất đi Uozumi.]
Dialogue: 0,0:03:20.52,0:03:23.01,Default,,0,0,0,,[Đường đến giải đấu toàn quốc\Nđúng là khó đi mà.]
Dialogue: 0,0:03:25.21,0:03:32.47,Default,,0,0,0,,[Trận chiến mạnh nhất!\NSendoh đấu với Maki!]
Dialogue: 0,0:03:25.87,0:03:29.39,Default,,0,0,0,,[Trận chiến mạnh nhất!\NSendoh đấu với Maki!]
Dialogue: 0,0:03:47.71,0:03:49.83,Default,,0,0,0,,Tên ngu ngốc đó\Nvốn không có tư cách làm đội trưởng.
Dialogue: 0,0:03:50.52,0:03:53.42,Default,,0,0,0,,Thế mà lại cãi nhau với trọng tài\Nđể bị đuổi ra sân, đúng là vô cùng ngu ngốc.
Dialogue: 0,0:03:59.04,0:04:00.53,Default,,0,0,0,,[Uozumi mất tinh thần ra khỏi sân.]
Dialogue: 0,0:04:00.87,0:04:04.74,Default,,0,0,0,,[Maki của Kainan bình tĩnh ném vào hai quả.]
Dialogue: 0,0:04:08.81,0:04:10.75,Default,,0,0,0,,[Cuối cùng\NKainan cũng lội ngược dòng dẫn trước rồi.]
Dialogue: 0,0:04:12.28,0:04:14.24,Default,,0,0,0,,Tốt lắm tốt lắm, đừng có buông lỏng.
Dialogue: 0,0:04:14.38,0:04:16.74,Default,,0,0,0,,Các cậu không cần phải\Nkhách sáo với đối thủ đâu.
Dialogue: 0,0:04:16.86,0:04:18.99,Default,,0,0,0,,Xem ra dây dưa kéo dài rồi.
Dialogue: 0,0:04:19.74,0:04:21.55,Default,,0,0,0,,Ryonan đến đây là dừng lại rồi sao?
Dialogue: 0,0:04:24.84,0:04:26.16,Default,,0,0,0,,Vậy thì chưa chắc.
Dialogue: 0,0:04:32.03,0:04:32.69,Default,,0,0,0,,Sendoh.
Dialogue: 0,0:04:33.37,0:04:34.80,Default,,0,0,0,,Cậu ta mất bình tĩnh rồi sao?
Dialogue: 0,0:04:42.81,0:04:44.80,Default,,0,0,0,,Sendoh lợi hại, mới đó mà lấy điểm lại rồi.
Dialogue: 0,0:04:47.62,0:04:50.05,Default,,0,0,0,,Hay lắm, đây mới là Sendoh của chúng tôi.
Dialogue: 0,0:04:56.12,0:04:58.29,Default,,0,0,0,,Quả nhiên Sendoh là một người lợi hại.
Dialogue: 0,0:04:58.89,0:05:02.40,Default,,0,0,0,,[Đối diện kẻ địch mạnh như Kainan,\NRyonan mất đi Uozumi]
Dialogue: 0,0:05:02.53,0:05:03.93,Default,,0,0,0,,[lại không thể dùng Fukuda.]
Dialogue: 0,0:05:04.27,0:05:07.83,Default,,0,0,0,,[Gần như có thể nói Ryonan đã mất đi\Ntất cả cơ hội chiến thắng rồi.]
Dialogue: 0,0:05:08.47,0:05:10.44,Default,,0,0,0,,[Tại sao trong mắt họ\Nlại không có chút nhụt chí nào?]
Dialogue: 0,0:05:13.49,0:05:14.83,Default,,0,0,0,,[Rõ ràng đã không có đường thắng...]
Dialogue: 0,0:05:24.03,0:05:31.93,Default,,0,0,0,,[Chắc chắn Sendoh sẽ nghĩ cách,\Nhình như ánh mắt của cậu ta đang nói như thế.]
Dialogue: 0,0:05:39.95,0:05:40.82,Default,,0,0,0,,Là cướp bóng.
Dialogue: 0,0:05:41.02,0:05:42.01,Default,,0,0,0,,Người cao to phô trương chiều cao.
Dialogue: 0,0:05:44.31,0:05:45.30,Default,,0,0,0,,Tấn công nhanh một mình.
Dialogue: 0,0:05:45.61,0:05:46.80,Default,,0,0,0,,Sendoh đối đầu với Maki.
Dialogue: 0,0:05:52.18,0:05:54.28,Default,,0,0,0,,Chẳng lẽ khoảnh khắc\Nthay thế thời đại đã đến rồi sao?
Dialogue: 0,0:05:58.24,0:06:00.05,Default,,0,0,0,,Sendoh, xin cậu đấy.
Dialogue: 0,0:06:12.65,0:06:15.61,Default,,0,0,0,,Đừng cho rằng tôi sẽ để cậu úp rổ dễ dàng.
Dialogue: 0,0:06:27.09,0:06:29.69,Default,,0,0,0,,Chắc chắn tôi sẽ úp vào rổ cho anh xem.
Dialogue: 0,0:06:30.09,0:06:31.35,Default,,0,0,0,,Vậy thì cậu phải có bản lĩnh đó mới được.
Dialogue: 0,0:06:41.07,0:06:42.27,Default,,0,0,0,,Trận đấu đang nóng lên.
Dialogue: 0,0:06:42.71,0:06:45.89,Default,,0,0,0,,Sendoh và Maki thật sự liều mạng rồi.
Dialogue: 0,0:06:46.00,0:06:48.58,Default,,0,0,0,,Ý thức cạnh tranh của hai người họ\Nđã thể hiện ra mặt rồi.
Dialogue: 0,0:07:21.96,0:07:25.03,Default,,0,0,0,,Không biết cái thằng Hanamichi\Nhôm nay có bị đuổi khỏi sân không?
Dialogue: 0,0:07:25.19,0:07:26.79,Default,,0,0,0,,Tôi có nghe Haruko nói
Dialogue: 0,0:07:26.92,0:07:30.10,Default,,0,0,0,,lần này Shohoku\Nthắng Takesato với tỉ só 120-81,
Dialogue: 0,0:07:30.22,0:07:32.48,Default,,0,0,0,,còn biểu hiện của Hanamichi\Nthì cậu ấy chẳng nói gì cả.
Dialogue: 0,0:07:32.75,0:07:36.25,Default,,0,0,0,,Tao thấy nó giữa chừng phạm lỗi năm lần\Nbị đuổi khỏi sân, rồi bị Tinh Tinh Bự mắng cho.
Dialogue: 0,0:07:45.50,0:07:47.13,Default,,0,0,0,,Kia, kia là cái gì?
Dialogue: 0,0:07:48.10,0:07:48.93,Default,,0,0,0,,Là Hanamichi.
Dialogue: 0,0:07:52.91,0:07:54.67,Default,,0,0,0,,Trận đấu thế nào rồi Hanamichi?
Dialogue: 0,0:07:55.34,0:07:59.30,Default,,0,0,0,,Thấy mày thể lực dồi dào vậy\Nlà lại bị ép ra khỏi sân rồi, đúng không?
Dialogue: 0,0:08:02.08,0:08:04.48,Default,,0,0,0,,[Mắt điếc tai ngơ]
Dialogue: 0,0:08:04.75,0:08:06.22,Default,,0,0,0,,Hanamichi.
Dialogue: 0,0:08:18.80,0:08:19.70,Default,,0,0,0,,Là Maki.
Dialogue: 0,0:08:22.56,0:08:23.58,Default,,0,0,0,,Lại đuổi về rồi.
Dialogue: 0,0:08:33.00,0:08:34.26,Default,,0,0,0,,Sendoh đã trả đũa được rồi.
Dialogue: 0,0:08:37.54,0:08:39.23,Default,,0,0,0,,Kainan vẫn đang dẫn trước một điểm.
Dialogue: 0,0:08:39.70,0:08:43.11,Default,,0,0,0,,Sendoh đối diện với ông hoàng Maki\Nmà không nhường một bước.
Dialogue: 0,0:08:43.31,0:08:44.24,Default,,0,0,0,,Lợi hại.
Dialogue: 0,0:08:47.67,0:08:50.00,Default,,0,0,0,,Có thể nói đây là\Ntrận quyết đấu giữa các siêu sao.
Dialogue: 0,0:09:00.40,0:09:01.36,Default,,0,0,0,,Đáng ghét.
Dialogue: 0,0:09:04.06,0:09:05.79,Default,,0,0,0,,Chỉ có thể tiến hành tập huấn đặc biệt.
Dialogue: 0,0:09:10.33,0:09:12.80,Default,,0,0,0,,Lại không vào, đáng ghét thật.
Dialogue: 0,0:09:23.11,0:09:24.08,Default,,0,0,0,,Bố Già.
Dialogue: 0,0:09:24.41,0:09:27.18,Default,,0,0,0,,Sakuragi,\Ntiếp tục luyện tập, tiếp tục luyện tập.
Dialogue: 0,0:09:28.10,0:09:29.43,Default,,0,0,0,,Em biết rồi.
Dialogue: 0,0:09:29.55,0:09:31.17,Default,,0,0,0,,Trận đấu hôm nay\Nkhông có cơ hội để em thể hiện.
Dialogue: 0,0:09:31.17,0:09:32.83,Default,,0,0,0,,Năng lượng của em không có chỗ để trút ra.
Dialogue: 0,0:09:33.23,0:09:37.11,Default,,0,0,0,,Xem đây, phải đánh bại Sendoh,\Nnhảy lên ném bóng.
Dialogue: 0,0:09:43.25,0:09:45.72,Default,,0,0,0,,- Sendoh.\N- Maki.
Dialogue: 0,0:09:51.29,0:09:53.88,Default,,0,0,0,,Biến thành trận đấu một đấu một\Ncủa Sendoh và Maki rồi.
Dialogue: 0,0:09:54.16,0:09:56.85,Default,,0,0,0,,Hai người họ\Nbắt đầu phát huy năng lực của mình.
Dialogue: 0,0:09:57.09,0:10:00.00,Default,,0,0,0,,Cả hướng đi của trận đấu\Ncũng càng ngày càng hỗn loạn không rõ rồi.
Dialogue: 0,0:10:02.13,0:10:03.43,Default,,0,0,0,,Chỉ còn lại năm phút cuối cùng.
Dialogue: 0,0:10:13.00,0:10:13.86,Default,,0,0,0,,Đến đây đến đây.
Dialogue: 0,0:10:17.39,0:10:18.48,Default,,0,0,0,,Đây là Akagi.
Dialogue: 0,0:10:21.26,0:10:24.53,Default,,0,0,0,,Anh tôi thi đấu vẫn chưa về.
Dialogue: 0,0:10:33.45,0:10:35.11,Default,,0,0,0,,Làm tốt lắm Maki.
Dialogue: 0,0:10:42.83,0:10:44.42,Default,,0,0,0,,Bây giờ Kainan lại dẫn trước rồi.
Dialogue: 0,0:10:45.03,0:10:47.00,Default,,0,0,0,,Đây chính là bản lĩnh thật sự của Kainan.
Dialogue: 0,0:10:50.47,0:10:52.03,Default,,0,0,0,,Huấn luyện viên Anzai, thầy ấy...
Dialogue: 0,0:10:55.61,0:10:56.63,Default,,0,0,0,,Ngất xỉu rồi.
Dialogue: 0,0:11:16.78,0:11:18.22,Default,,0,0,0,,Ryonan cố gắng lên.
Dialogue: 0,0:11:18.31,0:11:21.03,Default,,0,0,0,,Kainan đánh bại Ryonan.
Dialogue: 0,0:11:30.96,0:11:32.86,Default,,0,0,0,,[Sendoh bắt đầu lộ ra vẻ mệt mỏi rồi.]
Dialogue: 0,0:11:33.26,0:11:34.92,Default,,0,0,0,,[Trước đây chưa từng có.]
Dialogue: 0,0:11:35.36,0:11:37.42,Default,,0,0,0,,[Kainan thật sự quá đáng sợ.]
Dialogue: 0,0:11:44.34,0:11:45.67,Default,,0,0,0,,[Cậu ấy mệt rồi.]
Dialogue: 0,0:11:48.09,0:11:48.92,Default,,0,0,0,,[Này là đương nhiên.]
Dialogue: 0,0:11:49.39,0:11:52.92,Default,,0,0,0,,[Công thủ toàn dựa vào mình Sendoh,\Nchịu trách nhiệm quá lớn.]
Dialogue: 0,0:11:53.69,0:11:57.89,Default,,0,0,0,,[Xem ra trông chừng Maki\Nkhó khăn hơn chúng ta tưởng tượng rất nhiều.]
Dialogue: 0,0:12:01.63,0:12:02.67,Default,,0,0,0,,[Nếu tiếp tục thế này]
Dialogue: 0,0:12:02.78,0:12:05.01,Default,,0,0,0,,[có lẽ sẽ ảnh hưởng đến\Ntrận đấu của chúng ta với Shohoku.]
Dialogue: 0,0:12:20.27,0:12:21.79,Default,,0,0,0,,Cậu sao rồi Fukuda?
Dialogue: 0,0:12:27.81,0:12:30.27,Default,,0,0,0,,Sẽ làm tổn thương\Nđến lòng tự trọng của Sendoh.
Dialogue: 0,0:12:32.11,0:12:34.51,Default,,0,0,0,,Dù thế nào cậu ấy cũng sẽ không thua đâu.
Dialogue: 0,0:12:53.27,0:12:55.93,Default,,0,0,0,,Hiểu rồi, cậu nói không sai chút nào Fukuda.
Dialogue: 0,0:12:56.34,0:12:59.17,Default,,0,0,0,,Cậu đi giảm nhẹ áp lực tấn công của Sendoh đi.
Dialogue: 0,0:13:04.28,0:13:05.50,Default,,0,0,0,,Ryonan đổi người rồi.
Dialogue: 0,0:13:07.01,0:13:08.14,Default,,0,0,0,,Trông cậy vào cậu đó Fukuda.
Dialogue: 0,0:13:08.41,0:13:11.61,Default,,0,0,0,,Bây giờ người có thể giúp Sendoh\Nchỉ còn mình cậu thôi.
Dialogue: 0,0:13:19.49,0:13:21.69,Default,,0,0,0,,Là Fukuda, cậu ta ra sân lần nữa.
Dialogue: 0,0:13:22.43,0:13:23.76,Default,,0,0,0,,Cậu ta rất được chào đón.
Dialogue: 0,0:13:24.98,0:13:27.69,Default,,0,0,0,,Fukuda.
Dialogue: 0,0:13:27.78,0:13:30.80,Default,,0,0,0,,Nói về tấn công thì thực lực của cậu ta\Ncùng cấp bậc với Sendoh đó.
Dialogue: 0,0:13:39.49,0:13:43.48,Default,,0,0,0,,Sao, đàn anh Taoka\Nmuốn khiêu chiến điểm số sao?
Dialogue: 0,0:13:47.16,0:13:48.39,Default,,0,0,0,,Lực lượng ngang nhau.
Dialogue: 0,0:13:49.23,0:13:52.30,Default,,0,0,0,,Người ghi điểm cho đội Kainan\Nkhông phải chỉ mình Maki đâu,
Dialogue: 0,0:13:52.44,0:13:53.83,Default,,0,0,0,,chúng tôi còn có Jin nữa.
Dialogue: 0,0:13:54.22,0:13:57.58,Default,,0,0,0,,Ngoài ra các người cũng đừng quên\Ncòn người mới siêu cấp là tôi đây nữa,
Dialogue: 0,0:13:57.58,0:13:59.21,Default,,0,0,0,,Sự tồn tại của Kiyota Nobunaga.
Dialogue: 0,0:13:59.70,0:14:02.17,Default,,0,0,0,,Không ngừng cố gắng,\Nchúng ta có thể đánh bại được Kainan.
Dialogue: 0,0:14:02.28,0:14:04.71,Default,,0,0,0,,Đúng, phải thắng.
Dialogue: 0,0:14:07.72,0:14:08.88,Default,,0,0,0,,Akagi.
Dialogue: 0,0:14:09.30,0:14:11.87,Default,,0,0,0,,Akagi của cấp ba Shohoku có ở đây không?
Dialogue: 0,0:14:12.61,0:14:16.31,Default,,0,0,0,,Akagi, Akagi.
Dialogue: 0,0:14:16.68,0:14:18.62,Default,,0,0,0,,Akagi của cấp ba Shohoku.
Dialogue: 0,0:14:18.62,0:14:21.59,Default,,0,0,0,,- Có chuyện gì vậy?\N- Bạn Akagi có ở đây không?
Dialogue: 0,0:14:24.29,0:14:25.60,Default,,0,0,0,,Tôi chính là Akagi.
Dialogue: 0,0:14:25.95,0:14:28.32,Default,,0,0,0,,- Cậu chính là Akagi?\N- Đúng vậy.
Dialogue: 0,0:14:28.43,0:14:29.76,Default,,0,0,0,,Có điện thoại của cậu.
Dialogue: 0,0:14:32.42,0:14:34.57,Default,,0,0,0,,Hình như có chuyện gì gấp vừa xảy ra đấy.
Dialogue: 0,0:14:35.96,0:14:38.87,Default,,0,0,0,,- Sao?\N- Cái này sao?
Dialogue: 0,0:14:41.79,0:14:44.99,Default,,0,0,0,,Cái gì? Là Haruko.
Dialogue: 0,0:14:46.43,0:14:48.15,Default,,0,0,0,,Em sao vậy, bình tĩnh chút.
Dialogue: 0,0:14:51.25,0:14:52.26,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:14:52.37,0:14:54.29,Default,,0,0,0,,Huấn luyện viên Anzai ngất xỉu?
Dialogue: 0,0:14:55.11,0:14:57.67,Default,,0,0,0,,Anh biết rồi,\Nbây giờ thầy ấy đang ở bệnh viện nào?
Dialogue: 0,0:14:59.13,0:15:00.53,Default,,0,0,0,,Anh qua đó ngay.
Dialogue: 0,0:15:02.09,0:15:03.15,Default,,0,0,0,,[Huấn luyện viên Anzai.]
Dialogue: 0,0:15:06.80,0:15:07.95,Default,,0,0,0,,Mọi người lên.
Dialogue: 0,0:15:17.98,0:15:19.67,Default,,0,0,0,,Đến bệnh viện tổng hợp Kitamura.
Dialogue: 0,0:15:20.05,0:15:22.78,Default,,0,0,0,,Cậu cao ghê, cậu chơi bóng rổ hả?
Dialogue: 0,0:15:22.98,0:15:24.24,Default,,0,0,0,,Xin ông chạy nhanh chút được không?
Dialogue: 0,0:15:44.84,0:15:47.81,Default,,0,0,0,,Đôi giày này mang đến bây giờ đã rất lâu rồi.
Dialogue: 0,0:15:46.00,0:15:48.00,Default,,0,0,0,,[Giải đấu bóng rổ trường cấp ba toàn quốc]
Dialogue: 0,0:15:49.07,0:15:50.20,Default,,0,0,0,,Lẽ nào nên thay một đôi mới sao?
Dialogue: 0,0:16:10.56,0:16:12.03,Default,,0,0,0,,Cái con đó đang làm cái mẹ gì vậy?
Dialogue: 0,0:16:12.30,0:16:15.39,Default,,0,0,0,,Xem thường con người hả?\NThấy tao mà còn không trốn đi.
Dialogue: 0,0:16:19.04,0:16:20.77,Default,,0,0,0,,Đúng là cái đồ tự cao.
Dialogue: 0,0:16:24.28,0:16:26.24,Default,,0,0,0,,Cái con này làm gì vậy hả?
Dialogue: 0,0:16:31.42,0:16:34.97,Default,,0,0,0,,Theo bác sĩ nói thì bệnh tình\Ncủa huấn luyện viên không nguy hiểm.
Dialogue: 0,0:16:35.60,0:16:38.42,Default,,0,0,0,,Không ngờ huấn luyện viên Anzai\Nlại có chứng bệnh này.
Dialogue: 0,0:16:38.50,0:16:40.89,Default,,0,0,0,,Trận đấu ngày mai nên làm sao đây?
Dialogue: 0,0:16:41.59,0:16:43.85,Default,,0,0,0,,Bây giờ không phải lúc lo cho trận đấu.
Dialogue: 0,0:17:04.04,0:17:06.00,Default,,0,0,0,,- Vào rồi.\N- Tốt lắm.
Dialogue: 0,0:17:10.96,0:17:13.45,Default,,0,0,0,,Chỉ còn kém một bóng nữa,\Ncòn lại 20 giây cuối cùng.
Dialogue: 0,0:17:15.58,0:17:18.14,Default,,0,0,0,,Không hổ danh Fukuda, cậu là đáng tin nhất.
Dialogue: 0,0:17:19.71,0:17:22.87,Default,,0,0,0,,Ra tay từ phía trên, ra tay từ phía trên,\Ngiữ chặt Maki.
Dialogue: 0,0:17:27.56,0:17:28.59,Default,,0,0,0,,Cố lên.
Dialogue: 0,0:17:30.31,0:17:31.30,Default,,0,0,0,,Còn lại không đến 20 giây.
Dialogue: 0,0:17:32.08,0:17:34.16,Default,,0,0,0,,Hết giờ rồi mau ra tay, mau ra tay thôi.
Dialogue: 0,0:17:35.78,0:17:38.08,Default,,0,0,0,,Maki giữ chặt bóng, đừng để họ giành được.
Dialogue: 0,0:17:40.51,0:17:41.91,Default,,0,0,0,,[Đáng ghét, không giành được.]
Dialogue: 0,0:17:46.29,0:17:47.84,Default,,0,0,0,,Làm tốt lắm Ikegami.
Dialogue: 0,0:17:59.16,0:18:01.73,Default,,0,0,0,,Lấy được bóng rồi, Sendoh đã lấy được bóng.
Dialogue: 0,0:18:02.48,0:18:03.50,Default,,0,0,0,,[Thời gian thì sao?]
Dialogue: 0,0:18:04.43,0:18:05.19,Default,,0,0,0,,Vẫn còn thời gian.
Dialogue: 0,0:18:06.73,0:18:07.53,Default,,0,0,0,,Xông lên.
Dialogue: 0,0:18:14.00,0:18:16.42,Default,,0,0,0,,Tốc độ Maki nhanh quá, sắp đuổi kịp rồi.
Dialogue: 0,0:18:22.51,0:18:23.60,Default,,0,0,0,,Tốt lắm, quấn lấy rồi.
Dialogue: 0,0:18:27.88,0:18:30.35,Default,,0,0,0,,[Kì lạ, nếu mình là Sendoh.]
Dialogue: 0,0:18:46.00,0:18:49.63,Default,,0,0,0,,Vào rồi, Sendoh vào rồi, Sendoh tuyệt quá.
Dialogue: 0,0:19:04.65,0:19:05.62,Default,,0,0,0,,Hết giờ rồi.
Dialogue: 0,0:19:06.06,0:19:08.22,Default,,0,0,0,,Hiệp phụ, hiệp phụ rồi.
Dialogue: 0,0:19:17.32,0:19:20.19,Default,,0,0,0,,Tuyệt quá, Sendoh làm tốt lắm.
Dialogue: 0,0:19:20.54,0:19:22.14,Default,,0,0,0,,Làm tốt lắm.
Dialogue: 0,0:19:27.84,0:19:29.56,Default,,0,0,0,,Vậy là chúng ta có hy vọng rồi.
Dialogue: 0,0:19:31.91,0:19:34.58,Default,,0,0,0,,Không hổ danh là Sendoh, đúng là thiên tài.
Dialogue: 0,0:19:43.75,0:19:48.35,Default,,0,0,0,,[Nghỉ hai phút\Nsau đó tiến vào hiệp phụ năm phút.]
Dialogue: 0,0:19:58.87,0:20:00.43,Default,,0,0,0,,Sao, các cậu cũng đến rồi à?
Dialogue: 0,0:20:00.74,0:20:01.90,Default,,0,0,0,,Bây giờ vẫn còn sớm.
Dialogue: 0,0:20:06.02,0:20:08.02,Default,,0,0,0,,[Bệnh viện tổng hợp Kitamura]
Dialogue: 0,0:20:10.55,0:20:11.64,Default,,0,0,0,,Ở phòng bệnh 306.
Dialogue: 0,0:20:20.09,0:20:21.89,Default,,0,0,0,,Sakuragi Hanamichi.
Dialogue: 0,0:20:22.73,0:20:24.02,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:20:27.10,0:20:28.09,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:20:35.01,0:20:36.98,Default,,0,0,0,,Sakuragi, huấn luyện viên sao rồi?
Dialogue: 0,0:20:37.19,0:20:38.38,Default,,0,0,0,,Huấn luyện viên Anzai đâu?
Dialogue: 0,0:21:12.78,0:21:15.64,Default,,0,0,0,,♫ Trong giấc mơ nhếch nhác thảm hại ♫
Dialogue: 0,0:21:16.40,0:21:18.40,Default,,0,0,0,,♫ Tôi bỗng choàng tỉnh ♫
Dialogue: 0,0:21:20.27,0:21:23.48,Default,,0,0,0,,♫ Lại một buổi sớm với ánh nắng rực rỡ ♫
Dialogue: 0,0:21:23.59,0:21:26.04,Default,,0,0,0,,♫ Nghe bài hát mình thích ♫
Dialogue: 0,0:21:27.48,0:21:29.68,Default,,0,0,0,,♫ Mặc chiếc áo sơ mi sạch sẽ ♫
Dialogue: 0,0:21:30.57,0:21:33.83,Default,,0,0,0,,♫ Đêm qua ♫
Dialogue: 0,0:21:34.02,0:21:36.07,Default,,0,0,0,,♫ Có người nói với tôi với vẻ mệt mỏi rằng ♫
Dialogue: 0,0:21:36.23,0:21:38.02,Default,,0,0,0,,♫ Muốn tìm kiếm kích thích ♫
Dialogue: 0,0:21:38.18,0:21:39.74,Default,,0,0,0,,♫ Muốn đột phá thực tại ♫
Dialogue: 0,0:21:39.90,0:21:41.88,Default,,0,0,0,,♫ Đừng lún sâu như thế nữa ♫
Dialogue: 0,0:21:42.03,0:21:46.09,Default,,0,0,0,,♫ Hãy nắm giữ khoảnh khắc tỏa sáng ♫
Dialogue: 0,0:21:46.24,0:21:49.49,Default,,0,0,0,,♫ Tôi phải sống đúng với bản thân mình ♫
Dialogue: 0,0:21:50.20,0:21:53.97,Default,,0,0,0,,♫ Có lẽ sẽ hối hận, có lẽ không hoàn hảo ♫
Dialogue: 0,0:21:54.07,0:21:58.12,Default,,0,0,0,,♫ Nhưng đã không còn cô đơn nữa wow ♫
Dialogue: 0,0:21:58.24,0:22:05.19,Default,,0,0,0,,♫ Giọt nước mắt tràn mi\Nlại là thứ đẹp đẽ nhất ♫
Dialogue: 0,0:22:05.29,0:22:09.23,Default,,0,0,0,,♫ Tôi lại bước lên hành trình vô tận ♫
Dialogue: 0,0:22:09.38,0:22:13.36,Default,,0,0,0,,♫ Đi thẳng về phía trước,\Nkhông bao giờ lùi bước ♫
Dialogue: 0,0:22:21.22,0:22:22.54,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:24.66,0:22:27.24,Default,,0,0,0,,Em cảm thấy lúc đó\Nkhông phải Maki không cản được cậu ta.
Dialogue: 0,0:22:27.42,0:22:28.49,Default,,0,0,0,,Cậu nghĩ như vậy sao?
Dialogue: 0,0:22:28.61,0:22:30.36,Default,,0,0,0,,Thật ra tôi cũng nghĩ như vậy.
Dialogue: 0,0:22:31.26,0:22:33.88,Default,,0,0,0,,Tôi cảm thấy như Maki cố ý tránh ra.
Dialogue: 0,0:22:34.38,0:22:37.12,Default,,0,0,0,,Không, từ cách dẫn bóng trước đó có thể thấy
Dialogue: 0,0:22:37.71,0:22:41.97,Default,,0,0,0,,Sendoh cố ý để Maki đuổi theo dễ dàng.
Dialogue: 0,0:22:42.08,0:22:43.13,Default,,0,0,0,,Cố ý sao?
Dialogue: 0,0:22:43.79,0:22:45.02,Default,,0,0,0,,"Cao thủ bóng rổ."
Dialogue: 0,0:22:45.09,0:22:47.17,Default,,0,0,0,,"Sendoh - đặt cược trong chớp mắt!"
Dialogue: 0,0:22:47.27,0:22:48.69,Default,,0,0,0,,Chắc chắn phải xem đó.
