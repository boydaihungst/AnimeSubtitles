Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:11.82,0:00:20.65,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:20.72,0:00:24.16,Default,,0,0,0,,♫ Trong những bất an rối rắm ♫
Dialogue: 0,0:00:26.77,0:00:30.29,Default,,0,0,0,,♫ Xuất hiện tin xấu ♫
Dialogue: 0,0:00:31.40,0:00:36.44,Default,,0,0,0,,♫  Phong cảnh phố phường sạch sẽ ♫
Dialogue: 0,0:00:37.36,0:00:44.20,Default,,0,0,0,,♫ Trở nên rối loạn bởi sự tò mò trong lòng ♫
Dialogue: 0,0:00:45.00,0:00:51.00,Default,,0,0,0,,♫ Không ai chi phối được tôi cả ♫
Dialogue: 0,0:00:51.20,0:00:57.01,Default,,0,0,0,,♫ Ước mơ ấp ủ gõ vang cánh cửa ngày mai ♫
Dialogue: 0,0:00:57.09,0:01:03.07,Default,,0,0,0,,♫ Thời gian thấm thoắt trôi ♫
Dialogue: 0,0:01:03.16,0:01:09.91,Default,,0,0,0,,♫ Muốn được sống như một cơn gió ♫
Dialogue: 0,0:01:13.84,0:01:19.79,Default,,0,0,0,,♫ Để tôi được tự do, trong giấc mơ dài bất tận ♫
Dialogue: 0,0:01:19.91,0:01:25.95,Default,,0,0,0,,♫ Còn cách xa mục tiêu lắm ♫
Dialogue: 0,0:01:26.08,0:01:31.85,Default,,0,0,0,,♫ Dùng ánh mắt cháy bỏng ♫
Dialogue: 0,0:01:31.95,0:01:40.36,Default,,0,0,0,,♫ Theo đuổi đến khi cạn kiệt sức lực ♫
Dialogue: 0,0:01:56.15,0:01:58.27,Default,,0,0,0,,[Sakuragi Hanamichi vì muốn\Nchịu trách nhiệm cho lỗi sai của mình]
Dialogue: 0,0:01:58.27,0:02:01.77,Default,,0,0,0,,[khiến cho cả đội thua cuộc\Nnên đã cạo đầu trọc.]
Dialogue: 0,0:02:04.05,0:02:05.59,Default,,0,0,0,,[Với lời dặn của huấn luyện viên Anzai,]
Dialogue: 0,0:02:05.75,0:02:07.91,Default,,0,0,0,,[lớp 10 và lớp 11, 12 sẽ chia làm\Nhai đội để luyện tập thi đấu.]
Dialogue: 0,0:02:08.19,0:02:12.30,Default,,0,0,0,,[Sự tiến bộ vượt bậc của Sakuragi Hanamichi\Nkhiến cho cả đội Akagi đều ngạc nhiên.]
Dialogue: 0,0:02:12.43,0:02:14.48,Default,,0,0,0,,[Nhưng dưới sự dẫn dắt của Mitsui,]
Dialogue: 0,0:02:14.50,0:02:17.23,Default,,0,0,0,,[điểm yếu của Sakuragi đều lộ rõ ra hết.]
Dialogue: 0,0:02:18.83,0:02:20.34,Default,,0,0,0,,[Cú bắt bóng bật bảng!]
Dialogue: 0,0:02:20.56,0:02:22.22,Default,,0,0,0,,[Chỉ cần có thể ném vào.]
Dialogue: 0,0:02:22.70,0:02:26.57,Default,,0,0,0,,Xem ra cậu ấy đã phát hiện ra vấn đề của mình.
Dialogue: 0,0:02:27.54,0:02:29.87,Default,,0,0,0,,[Đối với đội\Nkhông khuất phục trước sự thất bại - Shohoku,]
Dialogue: 0,0:02:29.87,0:02:31.84,Default,,0,0,0,,[trận đấu với trường cấp ba Takesato\Nchỉ còn ba ngày.]
Dialogue: 0,0:02:32.27,0:02:35.49,Default,,0,0,0,,[Cuộc tập huấn đặc biệt\Ncho Hanamichi đã được triển khai.]
Dialogue: 0,0:02:36.48,0:02:37.91,Default,,0,0,0,,Vấn đề hiện tại của Sakuragi
Dialogue: 0,0:02:38.18,0:02:41.41,Default,,0,0,0,,là trong vòng ba ngày tiếp theo học được\Ncách ném bóng trong vùng cấm.
Dialogue: 0,0:02:42.22,0:02:44.95,Default,,0,0,0,,Ba ngày tiếp theo cậu sẽ bận đến nổi\Nkhông có thời gian ngủ.
Dialogue: 0,0:02:48.09,0:02:52.12,Default,,0,0,0,,[Ba ngày tập huấn đặc biệt!]
Dialogue: 0,0:03:07.37,0:03:12.31,Default,,0,0,0,,[Thứ Năm, ngày 24 tháng 6, 6:30AM]
Dialogue: 0,0:03:24.16,0:03:24.95,Default,,0,0,0,,93.
Dialogue: 0,0:03:28.15,0:03:29.11,Default,,0,0,0,,94.
Dialogue: 0,0:03:30.69,0:03:31.55,Default,,0,0,0,,95.
Dialogue: 0,0:03:34.16,0:03:35.11,Default,,0,0,0,,96.
Dialogue: 0,0:03:41.97,0:03:42.83,Default,,0,0,0,,97.
Dialogue: 0,0:03:43.70,0:03:45.57,Default,,0,0,0,,Ngưng!
Dialogue: 0,0:03:46.07,0:03:49.10,Default,,0,0,0,,Không được, cậu vẫn ném bóng bằng cánh tay.
Dialogue: 0,0:03:49.56,0:03:50.62,Default,,0,0,0,,Vậy sao?
Dialogue: 0,0:03:51.03,0:03:52.19,Default,,0,0,0,,Tư thế cầm bóng là...
Dialogue: 0,0:03:52.47,0:03:54.37,Default,,0,0,0,,Mở rộng bàn tay phải, giống như vậy.
Dialogue: 0,0:03:54.60,0:03:55.47,Default,,0,0,0,,Vậy tay trái thì sao?
Dialogue: 0,0:03:56.36,0:03:57.75,Default,,0,0,0,,Hỗ trợ.
Dialogue: 0,0:03:57.87,0:03:58.52,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:03:59.14,0:04:01.87,Default,,0,0,0,,Lúc nhận được bóng cũng\Nbắt buộc giữ lấy tư thế này.
Dialogue: 0,0:04:04.82,0:04:05.81,Default,,0,0,0,,Chỉ là hỗ trợ.
Dialogue: 0,0:04:05.87,0:04:07.11,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:04:09.07,0:04:10.06,Default,,0,0,0,,Chỉ là hỗ trợ.
Dialogue: 0,0:04:10.77,0:04:11.67,Default,,0,0,0,,Được rồi, bắt đầu!
Dialogue: 0,0:04:14.42,0:04:15.33,Default,,0,0,0,,[Bước vào cuộc thi đấu vòng tròn\Ncủa chung kết,]
Dialogue: 0,0:04:15.35,0:04:16.81,Default,,0,0,0,,[trước trận thứ hai và trận thứ ba,]
Dialogue: 0,0:04:17.29,0:04:19.39,Default,,0,0,0,,[Sakuragi đã bắt đầu tập luyện.]
Dialogue: 0,0:04:20.96,0:04:23.73,Default,,0,0,0,,[Đây là cuộc tập luyện giúp cho Sakuragi\Ncó thể ném bóng trong vùng cấm,]
Dialogue: 0,0:04:23.90,0:04:27.36,Default,,0,0,0,,[hơn nữa cũng có thể tham gia\Nphản công trong đội Shohoku.]
Dialogue: 0,0:04:33.44,0:04:34.69,Default,,0,0,0,,Ngưng!
Dialogue: 0,0:04:35.49,0:04:38.25,Default,,0,0,0,,Cơ thể không được nghiêng,\Nphải nhảy lên trên.
Dialogue: 0,0:04:38.34,0:04:40.18,Default,,0,0,0,,Em biết rồi.
Dialogue: 0,0:04:40.27,0:04:41.93,Default,,0,0,0,,Phải luôn tự kiểm điểm tư thế của mình.
Dialogue: 0,0:04:42.01,0:04:43.78,Default,,0,0,0,,Bây giờ là thời khắc rất quan trọng,
Dialogue: 0,0:04:43.95,0:04:46.79,Default,,0,0,0,,cứ luyện tập với tư thế sai\Nsẽ không thể nào chơi tốt được.
Dialogue: 0,0:04:46.96,0:04:48.15,Default,,0,0,0,,Cơ bản là quan trọng nhất,
Dialogue: 0,0:04:49.40,0:04:50.97,Default,,0,0,0,,phải không, Tinh Tinh Bự?
Dialogue: 0,0:04:51.07,0:04:52.12,Default,,0,0,0,,Nói rất đúng.
Dialogue: 0,0:04:52.57,0:04:54.06,Default,,0,0,0,,Phải luyện tập nhiều lần,
Dialogue: 0,0:04:54.79,0:04:59.32,Default,,0,0,0,,phải luyện tập không ngưng nghỉ, đến khi\Ncơ thể quen với những động tác mới thôi.
Dialogue: 0,0:04:59.57,0:05:00.97,Default,,0,0,0,,Bắt đầu đi, Sakuragi.
Dialogue: 0,0:05:16.36,0:05:17.33,Default,,0,0,0,,199.
Dialogue: 0,0:05:22.27,0:05:23.53,Default,,0,0,0,,Được rồi, quả cuối cùng.
Dialogue: 0,0:05:23.80,0:05:24.39,Default,,0,0,0,,Được!
Dialogue: 0,0:05:29.51,0:05:30.31,Default,,0,0,0,,Đồ ngốc!
Dialogue: 0,0:05:30.58,0:05:32.04,Default,,0,0,0,,Quả cuối cùng phải ném cho đàng hoàng!
Dialogue: 0,0:05:32.31,0:05:33.40,Default,,0,0,0,,Thêm một quả nữa.
Dialogue: 0,0:05:33.65,0:05:35.06,Default,,0,0,0,,Chết tiệt.
Dialogue: 0,0:05:40.99,0:05:41.78,Default,,0,0,0,,200.
Dialogue: 0,0:05:57.39,0:06:01.96,Default,,0,0,0,,Em này lại ngủ nữa rồi! Thằng nhóc này!
Dialogue: 0,0:06:12.00,0:06:14.00,Default,,0,0,0,,[Nghỉ trưa]
Dialogue: 0,0:06:14.64,0:06:16.54,Default,,0,0,0,,Ngon lắm!
Dialogue: 0,0:06:21.04,0:06:23.01,Default,,0,0,0,,Tinh Tinh Bự, tạm ngưng một lát.
Dialogue: 0,0:06:26.62,0:06:29.24,Default,,0,0,0,,Bọn mày không được phép ăn cơm ở đây!
Dialogue: 0,0:06:29.52,0:06:32.68,Default,,0,0,0,,Có liên quan gì chứ! Hanamichi,\Nmày có thiếu mất cục thịt nào đâu.
Dialogue: 0,0:06:33.69,0:06:36.18,Default,,0,0,0,,Bọn mày sẽ làm tao phân tâm!
Dialogue: 0,0:06:40.95,0:06:41.71,Default,,0,0,0,,Nó nghiêm túc thế.
Dialogue: 0,0:06:44.01,0:06:45.24,Default,,0,0,0,,Thật là!
Dialogue: 0,0:06:49.39,0:06:51.95,Default,,0,0,0,,Tao nói không được mở cửa, sẽ làm tao phân tâm!
Dialogue: 0,0:06:58.53,0:07:00.42,Default,,0,0,0,,Là Haruko sao? Mình....
Dialogue: 0,0:07:00.50,0:07:02.44,Default,,0,0,0,,Sakuragi, đừng lề mề ở đấy nữa!
Dialogue: 0,0:07:02.55,0:07:06.08,Default,,0,0,0,,- Giờ nghỉ trưa sắp kết thúc rồi.\N- Vâng.
Dialogue: 0,0:07:40.92,0:07:42.85,Default,,0,0,0,,[Cậu ấy càng lúc càng giỏi.]
Dialogue: 0,0:07:48.29,0:07:51.66,Default,,0,0,0,,[Vượt cả tưởng tượng của mình.]
Dialogue: 0,0:07:57.78,0:07:59.44,Default,,0,0,0,,Cố lên nhé, Sakuragi!
Dialogue: 0,0:08:12.73,0:08:15.79,Default,,0,0,0,,Được rồi, bây giờ ném bóng ngay giữa sân.
Dialogue: 0,0:08:25.37,0:08:27.09,Default,,0,0,0,,Được rồi, tập hợp!
Dialogue: 0,0:08:29.46,0:08:31.05,Default,,0,0,0,,Ngày mai là đến ngày thi đấu với Takesato,
Dialogue: 0,0:08:31.23,0:08:32.35,Default,,0,0,0,,mọi người phải tập trung tinh thần cho tốt!
Dialogue: 0,0:08:33.35,0:08:34.11,Default,,0,0,0,,Giải tán!
Dialogue: 0,0:08:34.21,0:08:35.68,Default,,0,0,0,,Vất vả rồi!
Dialogue: 0,0:09:01.44,0:09:02.94,Default,,0,0,0,,Mình bị trượt tay rồi.
Dialogue: 0,0:09:04.26,0:09:05.73,Default,,0,0,0,,Mau lau khô mồ hôi đi.
Dialogue: 0,0:09:13.53,0:09:17.23,Default,,0,0,0,,[Sau khi luyện tập còn phải tập thêm 300 quả,\Ncậu ấy chịu hết nổi rồi chăng?]
Dialogue: 0,0:09:17.92,0:09:20.13,Default,,0,0,0,,[Nhưng như vậy vẫn chưa đủ.]
Dialogue: 0,0:09:20.85,0:09:24.08,Default,,0,0,0,,[Cảm giác thời gian có\Nnhiều hơn đi nữa cũng không đủ.]
Dialogue: 0,0:09:27.55,0:09:28.44,Default,,0,0,0,,[Nhưng mà,]
Dialogue: 0,0:09:29.09,0:09:32.11,Default,,0,0,0,,[sao thằng nhóc này đến một câu\Nthan trách cũng không có?]
Dialogue: 0,0:09:36.03,0:09:39.56,Default,,0,0,0,,Được rồi, 88 quả cuối cùng,\Nem tới rồi đấy, Tinh Tinh Bự!
Dialogue: 0,0:09:40.64,0:09:42.07,Default,,0,0,0,,Tốt, cậu vẫn hăng hái như thế.
Dialogue: 0,0:09:42.17,0:09:43.13,Default,,0,0,0,,Đương nhiên rồi!
Dialogue: 0,0:09:43.25,0:09:44.50,Default,,0,0,0,,Em là thiên tài Sakuragi có tinh thần
Dialogue: 0,0:09:44.53,0:09:46.03,Default,,0,0,0,,không chịu khuất phục mà!
Dialogue: 0,0:09:46.15,0:09:47.17,Default,,0,0,0,,Cậu đang nói vớ vẩn gì vậy?
Dialogue: 0,0:09:48.34,0:09:49.10,Default,,0,0,0,,213.
Dialogue: 0,0:09:49.78,0:09:51.07,Default,,0,0,0,,214.
Dialogue: 0,0:09:51.91,0:09:52.71,Default,,0,0,0,,215.
Dialogue: 0,0:09:53.05,0:09:55.10,Default,,0,0,0,,- 216.\N- Cậu làm sao vậy?
Dialogue: 0,0:09:55.35,0:09:56.94,Default,,0,0,0,,Càng nhảy càng thấp.
Dialogue: 0,0:09:58.25,0:09:59.16,Default,,0,0,0,,217.
Dialogue: 0,0:09:59.35,0:10:00.82,Default,,0,0,0,,Tập trung mọi sức lực vào mười ngón tay!
Dialogue: 0,0:10:02.12,0:10:03.38,Default,,0,0,0,,218.
Dialogue: 0,0:10:08.78,0:10:11.18,Default,,0,0,0,,[Từ lúc gia nhập đội bóng rổ đến này,\Nđây là lần đầu tiên gà mờ Sakuragi]
Dialogue: 0,0:10:11.45,0:10:13.59,Default,,0,0,0,,[nghiêm túc tập luyện.]
Dialogue: 0,0:10:13.71,0:10:17.41,Default,,0,0,0,,[Các động tác cơ bản dẫn bóng,\Nchuyền bóng, bắt bóng bật bảng,...]
Dialogue: 0,0:10:18.28,0:10:20.18,Default,,0,0,0,,[Đối với cậu ấy,]
Dialogue: 0,0:10:22.26,0:10:24.42,Default,,0,0,0,,[luyện tập ném bóng là một việc rất vui vẻ.]
Dialogue: 0,0:10:27.99,0:10:28.68,Default,,0,0,0,,Ném hay lắm!
Dialogue: 0,0:10:31.02,0:10:31.92,Default,,0,0,0,,Anh Bốn Mắt!
Dialogue: 0,0:10:34.73,0:10:36.27,Default,,0,0,0,,Không phải cậu đã về rồi sao?
Dialogue: 0,0:10:36.88,0:10:40.57,Default,,0,0,0,,Muộn như vậy còn không về nhà,\Nchắc người nhà sẽ lo lắng lắm.
Dialogue: 0,0:10:42.45,0:10:43.51,Default,,0,0,0,,Vậy cậu thì sao?
Dialogue: 0,0:10:45.69,0:10:46.88,Default,,0,0,0,,Tôi đã đi đến trạm xe rồi,
Dialogue: 0,0:10:47.04,0:10:48.64,Default,,0,0,0,,nhưng không biết tại sao lại đi ngược về đây.
Dialogue: 0,0:10:49.09,0:10:51.21,Default,,0,0,0,,Tôi có thể giúp việc gì không?
Dialogue: 0,0:10:52.30,0:10:53.21,Default,,0,0,0,,Tốt.
Dialogue: 0,0:10:54.15,0:10:56.02,Default,,0,0,0,,Sakuragi, chúng ta tập nâng cao hơn.
Dialogue: 0,0:10:56.67,0:10:58.77,Default,,0,0,0,,Kogure, cậu phụ trách chuyền bóng,
Dialogue: 0,0:10:58.90,0:11:00.20,Default,,0,0,0,,tôi sẽ ngăn cậu ấy.
Dialogue: 0,0:11:01.47,0:11:03.10,Default,,0,0,0,,Tôi sẽ không di chuyển,
Dialogue: 0,0:11:03.72,0:11:05.70,Default,,0,0,0,,chỉ giơ tay lên để ngăn cản.
Dialogue: 0,0:11:06.87,0:11:09.41,Default,,0,0,0,,Nhưng cậu đừng tưởng rằng cậu sẽ làm được.
Dialogue: 0,0:11:10.06,0:11:13.32,Default,,0,0,0,,Đối với thiên tài này,\Nkhông biết sẽ như thế nào!
Dialogue: 0,0:11:13.52,0:11:16.54,Default,,0,0,0,,- Được rồi, bắt đầu thôi.\N- Được!
Dialogue: 0,0:11:20.02,0:11:20.68,Default,,0,0,0,,Không được!
Dialogue: 0,0:11:21.03,0:11:23.93,Default,,0,0,0,,Cậu quá để tâm vào sự ngăn chặn của tôi,\Nđộng tác không còn nhanh nhạy nữa.
Dialogue: 0,0:11:35.41,0:11:38.14,Default,,0,0,0,,Tốt! Động tác vừa nãy đúng là rất tốt!
Dialogue: 0,0:11:39.81,0:11:41.90,Default,,0,0,0,,Anh Bốn Mắt, anh thật là tốt,
Dialogue: 0,0:11:42.00,0:11:44.52,Default,,0,0,0,,vì em là không sợ bị người nhà mắng.
Dialogue: 0,0:11:44.73,0:11:46.36,Default,,0,0,0,,Không liên quan gì đến người nhà cả.
Dialogue: 0,0:11:47.55,0:11:51.23,Default,,0,0,0,,Tôi đã học lớp 12 rồi, đây là cơ hội cuối cùng.
Dialogue: 0,0:11:52.57,0:11:54.66,Default,,0,0,0,,Nếu như không thể\Nvào được giải đấu toàn quốc,
Dialogue: 0,0:11:56.23,0:11:59.19,Default,,0,0,0,,thì trận đấu với Ryonan vào ngày kia\Nlà trận đấu cuối cùng.
Dialogue: 0,0:12:03.06,0:12:04.72,Default,,0,0,0,,Còn ba ngày nữa là tôi phải giải nghệ rồi,
Dialogue: 0,0:12:05.99,0:12:07.48,Default,,0,0,0,,tôi không muốn phải để lại nuối tiếc gì.
Dialogue: 0,0:12:10.93,0:12:13.03,Default,,0,0,0,,Chúng ta nhất định sẽ\Ntham gia giải đấu toàn quốc.
Dialogue: 0,0:12:14.47,0:12:16.99,Default,,0,0,0,,Đúng vậy, còn bao nhiêu quả nữa?
Dialogue: 0,0:12:18.11,0:12:19.73,Default,,0,0,0,,38 quả cuối cùng.
Dialogue: 0,0:12:20.14,0:12:21.63,Default,,0,0,0,,Được rồi, chơi nào!
Dialogue: 0,0:12:41.96,0:12:46.30,Default,,0,0,0,,[Thứ Bảy, ngày 26 tháng 6]
Dialogue: 0,0:13:07.42,0:13:08.56,Default,,0,0,0,,118.
Dialogue: 0,0:13:10.81,0:13:11.87,Default,,0,0,0,,119.
Dialogue: 0,0:13:25.29,0:13:28.26,Default,,0,0,0,,[Cuối cùng cũng đến lúc đấu với Takesato rồi.]
Dialogue: 0,0:13:39.51,0:13:40.55,Default,,0,0,0,,200.
Dialogue: 0,0:14:05.39,0:14:06.51,Default,,0,0,0,,[Trong vòng đầu tiên,]
Dialogue: 0,0:14:06.61,0:14:09.84,Default,,0,0,0,,[cuộc thi đấu của Shohoku\Nvà Takesato có lẽ sắp bắt đầu rồi.]
Dialogue: 0,0:14:10.74,0:14:15.47,Default,,0,0,0,,[Anh trai, các anh nhất định phải thắng nhé!\NCòn Sakuragi, còn..]
Dialogue: 0,0:14:18.21,0:14:19.40,Default,,0,0,0,,[Rukawa!]
Dialogue: 0,0:14:33.29,0:14:35.42,Default,,0,0,0,,Trước đấy họ đã thua một trận rồi.
Dialogue: 0,0:14:35.63,0:14:37.83,Default,,0,0,0,,Nếu thua cả trận này\Nthì đồng nghĩa với việc bị loại.
Dialogue: 0,0:14:37.94,0:14:39.72,Default,,0,0,0,,Đúng vậy, chị Aida.
Dialogue: 0,0:14:39.85,0:14:43.06,Default,,0,0,0,,Nakamura, từ khi nào mà cậu nghiêm túc thế?
Dialogue: 0,0:14:43.19,0:14:45.18,Default,,0,0,0,,Đúng vậy, điều kiêng kỵ nhất\Nchính là khinh địch.
Dialogue: 0,0:14:45.29,0:14:48.88,Default,,0,0,0,,Lần trước trong trận đấu với Kainan,\Nem đã quên mất điều này.
Dialogue: 0,0:14:49.12,0:14:49.77,Default,,0,0,0,,Nghe rõ chưa?
Dialogue: 0,0:14:49.95,0:14:52.55,Default,,0,0,0,,Bất luận thế nào,\Nchúng ta cũng phải đánh bại Shohoku!
Dialogue: 0,0:14:52.66,0:14:55.53,Default,,0,0,0,,Có lẽ Kainan sẽ thắng hết ba trận,\Ngiành được quán quân,
Dialogue: 0,0:14:55.70,0:14:57.50,Default,,0,0,0,,cho nên chúng ta không thể\Ntừ bỏ trận đấu với Kainan được!
Dialogue: 0,0:14:57.97,0:15:00.08,Default,,0,0,0,,Mục tiêu của chúng ta là giành hạng hai!
Dialogue: 0,0:15:00.25,0:15:04.57,Default,,0,0,0,,Dùng thành tích một thắng hai thua, dùng\Nsự cách biệt của điểm số để phân thắng thua!
Dialogue: 0,0:15:04.71,0:15:08.88,Default,,0,0,0,,Vì thế trong trận đấu với Shohoku hôm nay,\Nchúng ta phải chiến đấu hết mình!
Dialogue: 0,0:15:09.01,0:15:11.97,Default,,0,0,0,,Dùng mọi cách để kéo xa khoảng cách điểm số,\Nnghe rõ chưa?
Dialogue: 0,0:15:12.07,0:15:13.00,Default,,0,0,0,,Rõ!
Dialogue: 0,0:15:15.27,0:15:16.97,Default,,0,0,0,,Sắp đến giờ rồi.
Dialogue: 0,0:15:18.04,0:15:22.00,Default,,0,0,0,,Cố lên!
Dialogue: 0,0:15:22.22,0:15:25.81,Default,,0,0,0,,Akagi, cố lên!
Dialogue: 0,0:15:26.99,0:15:29.63,Default,,0,0,0,,Rukawa! LOVE! Rukawa!
Dialogue: 0,0:15:29.75,0:15:33.51,Default,,0,0,0,,Trong trận đầu hôm nay,\Ncó vẻ như Shohoku rất được lòng khán giả.
Dialogue: 0,0:15:34.91,0:15:37.48,Default,,0,0,0,,Biểu hiện của họ vừa xuất sắc vừa cuốn hút.
Dialogue: 0,0:15:39.25,0:15:40.48,Default,,0,0,0,,Nhưng mà...
Dialogue: 0,0:15:41.79,0:15:43.40,Default,,0,0,0,,Sao không thấy cậu ta vậy?
Dialogue: 0,0:15:43.54,0:15:45.01,Default,,0,0,0,,Đúng vậy, Shohoku có chuyện gì vậy?
Dialogue: 0,0:15:45.10,0:15:47.02,Default,,0,0,0,,Trong trận đấu với Kainan,
Dialogue: 0,0:15:47.04,0:15:48.17,Default,,0,0,0,,người đã tránh được Maki rồi úp rổ đấy!
Dialogue: 0,0:15:48.35,0:15:49.11,Default,,0,0,0,,Chính là cậu số 10!
Dialogue: 0,0:15:49.22,0:15:51.52,Default,,0,0,0,,Sakuragi tóc đỏ không có mặt sao?
Dialogue: 0,0:15:52.01,0:15:54.01,Default,,0,0,0,,Tôi đến để xem cậu ta chơi đấy.
Dialogue: 0,0:15:56.03,0:15:59.00,Default,,0,0,0,,- Kuwata, cậu đi gọi điện nữa đi.\N- Vâng.
Dialogue: 0,0:15:59.74,0:16:02.40,Default,,0,0,0,,Nó không đến thì kệ nó.
Dialogue: 0,0:16:04.41,0:16:05.54,Default,,0,0,0,,Trận đấu bắt đầu.
Dialogue: 0,0:16:08.62,0:16:11.27,Default,,0,0,0,,Tên ngốc đó lại làm gì nữa đây?
Dialogue: 0,0:16:34.10,0:16:35.15,Default,,0,0,0,,Là Rukawa!
Dialogue: 0,0:16:37.94,0:16:38.91,Default,,0,0,0,,Cái gì?
Dialogue: 0,0:16:48.72,0:16:52.28,Default,,0,0,0,,Shohoku thay Akagi, là muốn giữ sức sao?
Dialogue: 0,0:16:52.82,0:16:53.52,Default,,0,0,0,,Đương nhiên là vậy rồi.
Dialogue: 0,0:16:53.79,0:16:55.45,Default,,0,0,0,,Chấn thương mà anh ta\Ngặp phải trong trận với Kainan
Dialogue: 0,0:16:55.47,0:16:57.68,Default,,0,0,0,,không phải vết thương có thể\Nkhỏi trong một tuần được.
Dialogue: 0,0:16:58.47,0:17:01.23,Default,,0,0,0,,Là vì muốn giữ sức để đấu với Ryonan.
Dialogue: 0,0:17:24.56,0:17:25.46,Default,,0,0,0,,Giỏi quá!
Dialogue: 0,0:17:28.50,0:17:32.43,Default,,0,0,0,,Chết tiệt! Từ khi nào mà Shohoku\Nlại trở nên mạnh như thế.
Dialogue: 0,0:17:32.70,0:17:35.57,Default,,0,0,0,,Chúng ta kém hơn rất nhiều đấy!
Dialogue: 0,0:17:35.97,0:17:38.84,Default,,0,0,0,,Điểm số bây giờ cách rất xa,\NTakesato thua chắc rồi.
Dialogue: 0,0:17:40.31,0:17:41.33,Default,,0,0,0,,Nếu xét về năng lực tấn công,
Dialogue: 0,0:17:41.51,0:17:44.64,Default,,0,0,0,,trong tỉnh, đội Shohoku là\Nmột trong những đội đứng đầu.
Dialogue: 0,0:17:51.55,0:17:53.25,Default,,0,0,0,,Đúng là điểm số đã cách nhau rất nhiều.
Dialogue: 0,0:17:56.06,0:17:59.22,Default,,0,0,0,,[Sakuragi rốt cuộc đang làm gì vậy?]
Dialogue: 0,0:17:59.76,0:18:01.70,Default,,0,0,0,,[Mình thật sự lo cho cậu ta.]
Dialogue: 0,0:18:03.67,0:18:05.66,Default,,0,0,0,,Mọi người xem, người đó là...
Dialogue: 0,0:18:06.67,0:18:07.36,Default,,0,0,0,,Gì vậy?
Dialogue: 0,0:18:10.41,0:18:11.50,Default,,0,0,0,,- Là Sakuragi!\N- Gì vậy?
Dialogue: 0,0:18:11.64,0:18:13.54,Default,,0,0,0,,Đầu của cậu ta sao thế?
Dialogue: 0,0:18:22.85,0:18:23.75,Default,,0,0,0,,Thật là!
Dialogue: 0,0:18:26.02,0:18:27.99,Default,,0,0,0,,Còn có năm phút!
Dialogue: 0,0:18:29.39,0:18:31.26,Default,,0,0,0,,Nhìn xem cậu ta kìa! Đầu trọc!
Dialogue: 0,0:18:31.46,0:18:34.49,Default,,0,0,0,,- Sao cậu ta dại dột mà đi làm hòa thượng thế?\N- Cậu ta nghĩ gì vậy?
Dialogue: 0,0:18:35.30,0:18:36.09,Default,,0,0,0,,Gì vậy?
Dialogue: 0,0:18:38.73,0:18:39.76,Default,,0,0,0,,Sakuragi.
Dialogue: 0,0:18:41.47,0:18:44.03,Default,,0,0,0,,Trông Sakuragi dữ dằn quá!
Dialogue: 0,0:18:44.21,0:18:46.70,Default,,0,0,0,,Mình biết rồi,\Ncậu ta đi cắt tóc nên mới đến muộn.
Dialogue: 0,0:18:47.84,0:18:49.47,Default,,0,0,0,,Không, không phải thế.
Dialogue: 0,0:18:52.82,0:18:54.41,Default,,0,0,0,,Đồ ngốc!
Dialogue: 0,0:18:55.15,0:18:57.40,Default,,0,0,0,,Cậu cho rằng tại sao tôi lại phải\Ntập huấn đặc biệt cho cậu hả?
Dialogue: 0,0:18:57.48,0:19:00.64,Default,,0,0,0,,Không phải, sáng hôm nay em cũng tập luyện,
Dialogue: 0,0:19:00.91,0:19:02.35,Default,,0,0,0,,đã ném 200 quả.
Dialogue: 0,0:19:03.72,0:19:07.68,Default,,0,0,0,,Sau khi luyện tập thì định ngủ một lát.
Dialogue: 0,0:19:08.92,0:19:11.89,Default,,0,0,0,,[Thì ra sáng hôm nay Sakuragi\Nđã luyện tập ném 200 quả.]
Dialogue: 0,0:19:15.04,0:19:16.96,Default,,0,0,0,,Không được ngủ, tên ngốc này!
Dialogue: 0,0:19:17.15,0:19:19.00,Default,,0,0,0,,Em chỉ muốn ngủ một lát thôi mà.
Dialogue: 0,0:19:21.02,0:19:22.51,Default,,0,0,0,,Hôm nay tôi sẽ không cho cậu ra sân.
Dialogue: 0,0:19:23.85,0:19:25.18,Default,,0,0,0,,Vì tôi không muốn để Ryonan
Dialogue: 0,0:19:26.06,0:19:28.92,Default,,0,0,0,,thấy được thành quả\Nsau khi cậu tập huấn đặc biệt.
Dialogue: 0,0:19:29.79,0:19:30.85,Default,,0,0,0,,Ryonan?
Dialogue: 0,0:19:50.48,0:19:51.64,Default,,0,0,0,,Tên đó...
Dialogue: 0,0:19:59.26,0:20:00.19,Default,,0,0,0,,Trận đấu kết thúc!
Dialogue: 0,0:20:00.43,0:20:01.33,Default,,0,0,0,,Thắng rồi!
Dialogue: 0,0:20:01.53,0:20:05.66,Default,,0,0,0,,Đây là một thắng một thua,\Ntiến thêm một bước đến chiến thắng!
Dialogue: 0,0:20:09.74,0:20:11.60,Default,,0,0,0,,Bây giờ mới là bắt đầu thôi ạ.
Dialogue: 0,0:20:14.38,0:20:16.28,Default,,0,0,0,,Như vậy là chúng ta đã bị loại rồi.
Dialogue: 0,0:20:16.61,0:20:19.38,Default,,0,0,0,,Đừng khóc, năm sau chúng ta\Nsẽ tiếp tục chiến đấu.
Dialogue: 0,0:20:19.65,0:20:21.12,Default,,0,0,0,,Bây giờ có thể tranh nhau\Ntư cách vào chung kết
Dialogue: 0,0:20:21.21,0:20:24.27,Default,,0,0,0,,chỉ có ba đội Kainan, Ryonan và Shohoku.
Dialogue: 0,0:20:24.81,0:20:25.67,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:20:26.76,0:20:27.72,Default,,0,0,0,,Hơn nữa,
Dialogue: 0,0:20:28.51,0:20:31.38,Default,,0,0,0,,trận đấu tiếp theo có lẽ là\Ntrận đấu giành quán quân thật sự.
Dialogue: 0,0:20:32.09,0:20:34.28,Default,,0,0,0,,Được rồi, lên nào!
Dialogue: 0,0:20:35.46,0:20:36.60,Default,,0,0,0,,Ra sân nào!
Dialogue: 0,0:20:41.00,0:20:44.33,Default,,0,0,0,,[Trong vòng thi đấu dốc hết toàn sức,\Ntrận đấu với Takesato]
Dialogue: 0,0:20:44.50,0:20:46.42,Default,,0,0,0,,[không hề có sự góp mặt\Ncủa Sakuragi Hanamichi của Shohoku,]
Dialogue: 0,0:20:46.64,0:20:49.19,Default,,0,0,0,,[đã dễ dàng ghi được hơn 100 điểm.]
Dialogue: 0,0:20:50.67,0:20:54.49,Default,,0,0,0,,[Trận đấu tiếp theo,\Ntrận đấu giữa Shohoku và Ryonan]
Dialogue: 0,0:20:54.62,0:20:56.69,Default,,0,0,0,,[sắp bắt đầu.]
Dialogue: 0,0:21:12.46,0:21:15.26,Default,,0,0,0,,♫ Trong giấc mơ nhếch nhác thảm hại ♫
Dialogue: 0,0:21:15.87,0:21:18.31,Default,,0,0,0,,♫ Tôi bỗng choàng tỉnh ♫
Dialogue: 0,0:21:20.06,0:21:24.18,Default,,0,0,0,,♫ Lại một buổi sớm với ánh nắng rực rỡ ♫
Dialogue: 0,0:21:27.87,0:21:30.86,Default,,0,0,0,,♫ Nghe bài hát mình thích ♫
Dialogue: 0,0:21:31.68,0:21:33.65,Default,,0,0,0,,♫ Mặc chiếc áo sơ mi sạch sẽ ♫
Dialogue: 0,0:21:35.33,0:21:38.40,Default,,0,0,0,,♫ Đêm qua ♫
Dialogue: 0,0:21:38.47,0:21:41.03,Default,,0,0,0,,♫ Có người nói với tôi với vẻ mệt mỏi rằng ♫
Dialogue: 0,0:21:42.35,0:21:44.90,Default,,0,0,0,,♫ Muốn tìm kiếm kích thích ♫
Dialogue: 0,0:21:45.67,0:21:49.08,Default,,0,0,0,,♫ Muốn đột phá thực tại ♫
Dialogue: 0,0:21:49.21,0:21:56.98,Default,,0,0,0,,♫ Đừng lún sâu như thế nữa ♫
Dialogue: 0,0:21:57.11,0:22:01.14,Default,,0,0,0,,♫ Hãy nắm giữ khoảnh khắc tỏa sáng ♫
Dialogue: 0,0:22:01.25,0:22:04.33,Default,,0,0,0,,♫ Tôi phải sống đúng với bản thân mình ♫
Dialogue: 0,0:22:05.19,0:22:08.89,Default,,0,0,0,,♫ Có lẽ sẽ hối hận, có lẽ không hoàn hảo ♫
Dialogue: 0,0:22:09.00,0:22:13.16,Default,,0,0,0,,♫ Nhưng đã không còn cô đơn nữa wow ♫
Dialogue: 0,0:22:13.31,0:22:20.15,Default,,0,0,0,,♫ Giọt nước mắt tràn mi\Nlại là thứ đẹp đẽ nhất ♫
Dialogue: 0,0:22:20.24,0:22:24.36,Default,,0,0,0,,♫ Tôi lại bước lên hành trình vô tận ♫
Dialogue: 0,0:22:24.49,0:22:28.45,Default,,0,0,0,,♫ Đi thẳng về phía trước,\Nkhông bao giờ lùi bước ♫
Dialogue: 0,0:22:36.20,0:22:37.52,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:22:40.36,0:22:42.69,Default,,0,0,0,,Sendoh và người trung niên một chọi một.
Dialogue: 0,0:22:42.85,0:22:45.52,Default,,0,0,0,,Những người khác phòng thủ ở từng khu vực.
Dialogue: 0,0:22:46.07,0:22:49.23,Default,,0,0,0,,Chiến thuật mà Ryonan kiên quyết\Ndùng Sendoh đối phó với Maki.
Dialogue: 0,0:22:49.41,0:22:51.06,Default,,0,0,0,,Sendoh là hậu vệ khống chế bóng.
Dialogue: 0,0:22:51.18,0:22:52.28,Default,,0,0,0,,Nghe rõ đây, Sakuragi.
Dialogue: 0,0:22:52.47,0:22:54.71,Default,,0,0,0,,Quan sát kỹ tên số 13 đó,
Dialogue: 0,0:22:54.82,0:22:56.73,Default,,0,0,0,,có thể cậu ta sẽ là đối thủ của cậu.
Dialogue: 0,0:22:56.89,0:22:58.23,Default,,0,0,0,,Fukuda sao?
Dialogue: 0,0:22:59.18,0:23:00.39,Default,,0,0,0,,"Cao thủ bóng rổ."
Dialogue: 0,0:23:00.49,0:23:03.44,Default,,0,0,0,,"Cuộc đối đầu đỉnh cao! Kainan đấu với Ryonan!"
Dialogue: 0,0:23:03.59,0:23:04.94,Default,,0,0,0,,Chắc chắn phải xem đó.
