Dialogue: 0,0:00:00.00,0:00:10.00,Default,,0,0,0,,[Chương trình này có phụ đề tiếng Việt]
Dialogue: 0,0:00:04.55,0:00:10.90,Default,,0,0,0,,[CAO THỦ BÓNG RỔ]
Dialogue: 0,0:00:29.03,0:00:35.50,Default,,0,0,0,,♫ Ánh mặt trời chói rọi phía sau lưng,\Ntôi bước trên con đường này ♫
Dialogue: 0,0:00:35.92,0:00:42.06,Default,,0,0,0,,♫ Cũng như thường lệ, lại bị vỗ vai ♫
Dialogue: 0,0:00:42.66,0:00:49.16,Default,,0,0,0,,♫ Cậu là nữ thần của tôi, không có lý do gì cả ♫
Dialogue: 0,0:00:49.22,0:00:54.66,Default,,0,0,0,,♫ Nhưng lại chưa từng khoác lấy tay tôi ♫
Dialogue: 0,0:00:54.74,0:01:01.30,Default,,0,0,0,,♫ Không biết từ lúc nào,\Nánh mắt đã không thể rời đi ♫
Dialogue: 0,0:01:01.44,0:01:08.02,Default,,0,0,0,,♫ Không buông ra, không do dự,\Nđiên cuồng vì cậu ♫
Dialogue: 0,0:01:08.04,0:01:14.96,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Nmuốn thử thay đổi ngày mai ♫
Dialogue: 0,0:01:15.06,0:01:21.52,Default,,0,0,0,,♫ Tôi muốn xé toạc\Nquãng thời gian đông cứng ♫
Dialogue: 0,0:01:21.54,0:01:28.76,Default,,0,0,0,,♫ Tôi muốn hét to rằng tôi thích cậu,\Ndũng cảm tiến lên một bước ♫
Dialogue: 0,0:01:28.92,0:01:36.14,Default,,0,0,0,,♫ Xin cậu hãy chấp nhận\Ntrái tim nồng cháy này của tôi ♫
Dialogue: 0,0:01:46.75,0:01:48.94,Default,,0,0,0,,[Trận đấu đầu tiên tuần chung kết]
Dialogue: 0,0:01:48.94,0:01:50.99,Default,,0,0,0,,[trong khuôn khổ\Ngiải đấu giữa các trường cấp ba toàn quốc.]
Dialogue: 0,0:01:51.95,0:01:54.99,Default,,0,0,0,,[Trận đấu của đội Shohuku với\Nđội có thành tích 16 năm liên tiếp]
Dialogue: 0,0:01:55.09,0:01:57.11,Default,,0,0,0,,[là nhà vô địch\Ncủa giải đấu giữa các truờng cấp ba,]
Dialogue: 0,0:01:57.23,0:01:59.71,Default,,0,0,0,,[trường cấp ba trực thuộc Đại học Kainan.]
Dialogue: 0,0:01:59.80,0:02:03.49,Default,,0,0,0,,[Ở nửa trận đầu,\NAkagi đã bị chấn thương và rời khỏi sân,]
Dialogue: 0,0:02:03.59,0:02:05.31,Default,,0,0,0,,[khiến cho Shohoku\Nrơi vào tình trạng nguy kịch.]
Dialogue: 0,0:02:05.33,0:02:07.97,Default,,0,0,0,,[Rukawa bắt đầu sự phản kích\Nđáng kinh ngạc của cậu ấy.]
Dialogue: 0,0:02:11.33,0:02:12.59,Default,,0,0,0,,Kỹ thuật bóng của Rukawa
Dialogue: 0,0:02:12.97,0:02:15.53,Default,,0,0,0,,đã sớm vượt qua lời tôi nói,\Ntrình độ độc đoán của cậu ta,
Dialogue: 0,0:02:16.07,0:02:18.54,Default,,0,0,0,,cậu ta đã điều khiển toàn bộ trận đấu.
Dialogue: 0,0:02:19.35,0:02:21.01,Default,,0,0,0,,- Chuyền cho tao.\N- Rukawa.
Dialogue: 0,0:02:24.39,0:02:25.76,Default,,0,0,0,,[Phút cuối cùng\Ntrước khi kết thúc nửa trận đầu,]
Dialogue: 0,0:02:26.76,0:02:29.42,Default,,0,0,0,,[Shohoku đã gỡ hòa với\Ntrường cấp ba trực thuộc Đại học Kainan.]
Dialogue: 0,0:02:31.10,0:02:32.50,Default,,0,0,0,,[Đến nửa trận sau,]
Dialogue: 0,0:02:32.68,0:02:34.98,Default,,0,0,0,,[tuy là Akagi quay về sân một lần nữa...]
Dialogue: 0,0:02:35.52,0:02:38.82,Default,,0,0,0,,[Chưa bắt đầu trận đấu mà đã nhiều mồ hôi\Nvậy rồi, tuyệt đối không bình thường.]
Dialogue: 0,0:02:38.92,0:02:40.54,Default,,0,0,0,,[Nhiều mồ hôi vậy chứng tỏ là\Nchân của anh ấy rất là đau.]
Dialogue: 0,0:02:41.02,0:02:43.99,Default,,0,0,0,,[Với tình hình sức khỏe bây giờ của anh ấy\Nsao mà chơi bóng đây.]
Dialogue: 0,0:02:46.06,0:02:50.22,Default,,0,0,0,,Sakuragi, cậu ấy vì muốn yểm trợ\Nsự chấn thương của anh.
Dialogue: 0,0:02:51.16,0:02:52.75,Default,,0,0,0,,[Nửa trận sau bắt đầu.]
Dialogue: 0,0:02:53.06,0:02:56.86,Default,,0,0,0,,[Akagi cố nén nổi đau,\Nném một quả đáng kinh ngạc,]
Dialogue: 0,0:02:56.99,0:03:01.05,Default,,0,0,0,,[giành lấy được quả dẫn trước trường Kainan\Ntừ lúc bắt đầu trận đấu đến nay.]
Dialogue: 0,0:03:09.15,0:03:18.02,Default,,0,0,0,,[Át chủ bài Maki - tấn công hết sức]
Dialogue: 0,0:03:11.09,0:03:13.72,Default,,0,0,0,,[Át chủ bài Maki - tấn công hết sức.]
Dialogue: 0,0:03:19.00,0:03:21.09,Default,,0,0,0,,- Akagi ghi điểm rồi.\N- Anh ấy quả nhiên là giỏi thật đó.
Dialogue: 0,0:03:21.50,0:03:22.97,Default,,0,0,0,,Cảm giác đó thật khác biệt.
Dialogue: 0,0:03:29.21,0:03:30.14,Default,,0,0,0,,Tinh Tinh Bự.
Dialogue: 0,0:03:37.82,0:03:38.95,Default,,0,0,0,,[Anh.]
Dialogue: 0,0:03:42.14,0:03:44.57,Default,,0,0,0,,[Akagi, người đàn ông mạnh như thế,]
Dialogue: 0,0:03:45.04,0:03:47.47,Default,,0,0,0,,[cậu ta có vẻ như không cảm thấy\Nchân bị chấn thương.]
Dialogue: 0,0:03:50.05,0:03:51.07,Default,,0,0,0,,Anh.
Dialogue: 0,0:03:51.24,0:03:53.01,Default,,0,0,0,,Tinh Tinh Bự,\Nkhông hổ danh là trụ cột vững chắc nhất.
Dialogue: 0,0:03:53.12,0:03:55.42,Default,,0,0,0,,Như vậy là Shohoku đã dẫn trước hai điểm rồi.
Dialogue: 0,0:03:55.75,0:03:58.37,Default,,0,0,0,,Từ lúc bắt đầu đến giờ,\Nđây là lần đầu Shohoku dẫn trước Kainan.
Dialogue: 0,0:04:00.69,0:04:02.92,Default,,0,0,0,,Đại Tinh Tinh, chân anh không đau nữa à?
Dialogue: 0,0:04:33.16,0:04:36.03,Default,,0,0,0,,Không, không đau nữa.
Dialogue: 0,0:04:37.69,0:04:39.02,Default,,0,0,0,,[Vẫn còn đau ư?]
Dialogue: 0,0:04:44.82,0:04:46.05,Default,,0,0,0,,Anh.
Dialogue: 0,0:04:47.51,0:04:49.74,Default,,0,0,0,,Được rồi, chỉ còn lại 20 phút thôi.
Dialogue: 0,0:04:50.21,0:04:51.62,Default,,0,0,0,,Để trở thành\Nngười mỉm cười cuối cùng sau giải đấu,
Dialogue: 0,0:04:51.76,0:04:54.05,Default,,0,0,0,,chúng ta phải giữ\Nmột tâm thái quyết tâm để chơi bóng.
Dialogue: 0,0:04:54.15,0:04:55.38,Default,,0,0,0,,Được.
Dialogue: 0,0:04:57.45,0:05:00.01,Default,,0,0,0,,[Sau 20 phút gục ngã xuống đất,\Nkhông thể đi nữa cũng được.]
Dialogue: 0,0:05:00.49,0:05:03.01,Default,,0,0,0,,[Chỉ cần cho mình vượt qua 20 phút là được rồi.]
Dialogue: 0,0:05:03.73,0:05:06.59,Default,,0,0,0,,[Mình không muốn vụt mất cơ hội\Nđã vất vả nắm lấy.]
Dialogue: 0,0:05:08.06,0:05:09.29,Default,,0,0,0,,Akagi.
Dialogue: 0,0:05:16.07,0:05:17.44,Default,,0,0,0,,[Đáng ghét.]
Dialogue: 0,0:05:23.58,0:05:25.77,Default,,0,0,0,,- [Đáng ghét.]\N- [Akagi.]
Dialogue: 0,0:05:27.72,0:05:30.30,Default,,0,0,0,,Sao mà Shohoku xui thế nhỉ,
Dialogue: 0,0:05:31.12,0:05:33.29,Default,,0,0,0,,mới trận đầu tiên đã gặp phải Awata,
Dialogue: 0,0:05:33.62,0:05:37.07,Default,,0,0,0,,năm nay họ là đội mạnh trong top 16.
Dialogue: 0,0:05:37.23,0:05:40.66,Default,,0,0,0,,Chúng ta đã cố gắng hết sức rồi,\Nđâu phải là không cố gắng đâu.
Dialogue: 0,0:05:55.58,0:05:58.27,Default,,0,0,0,,Chỉ ở một bên ăn ké thôi\Nthì là cố gắng gì chứ.
Dialogue: 0,0:06:02.05,0:06:03.59,Default,,0,0,0,,- Đến vùng cấm.\N- Được.
Dialogue: 0,0:06:04.09,0:06:05.02,Default,,0,0,0,,Cứ giao cho tôi.
Dialogue: 0,0:06:11.46,0:06:14.12,Default,,0,0,0,,Takasago, liều với cậu ta đi,\Nchân cậu ta bị chấn thương rồi.
Dialogue: 0,0:06:20.94,0:06:22.10,Default,,0,0,0,,[Không được.]
Dialogue: 0,0:06:24.37,0:06:27.50,Default,,0,0,0,,Đồ ngu, cậu không được bỏ trốn, cậu làm gì vậy?
Dialogue: 0,0:06:35.22,0:06:36.28,Default,,0,0,0,,[Akagi.]
Dialogue: 0,0:06:38.12,0:06:39.21,Default,,0,0,0,,[Maki.]
Dialogue: 0,0:06:49.90,0:06:50.68,Default,,0,0,0,,Hay quá đi.
Dialogue: 0,0:06:50.80,0:06:53.09,Default,,0,0,0,,Những đội lọt vào chung kết\Nđúng là xuất sắc hơn mình quá nhiều rồi.
Dialogue: 0,0:06:53.18,0:06:54.87,Default,,0,0,0,,Quả là khó mà tưởng tượng mà.
Dialogue: 0,0:06:56.39,0:06:59.03,Default,,0,0,0,,Nếu như để tôi đấu thêm vài trận nữa,
Dialogue: 0,0:06:59.12,0:07:00.11,Default,,0,0,0,,thì trình độ đó là gì chứ.
Dialogue: 0,0:07:00.39,0:07:01.93,Default,,0,0,0,,Các cậu lớp mấy vậy?
Dialogue: 0,0:07:02.26,0:07:03.82,Default,,0,0,0,,Bọn em lớp 10.
Dialogue: 0,0:07:04.29,0:07:06.42,Default,,0,0,0,,Hậu vệ của Shoyo cũng lớp 10 đó.
Dialogue: 0,0:07:11.90,0:07:13.87,Default,,0,0,0,,Được rồi, tiến lên, Fujima.
Dialogue: 0,0:07:14.90,0:07:18.34,Default,,0,0,0,,Với lại số 12 của Kainan\Ncũng bằng tuổi với các cậu đó.
Dialogue: 0,0:07:19.14,0:07:20.20,Default,,0,0,0,,Không phải chứ!
Dialogue: 0,0:07:27.15,0:07:29.04,Default,,0,0,0,,Họ là cặp anh hùng của tỉnh đó.
Dialogue: 0,0:07:29.16,0:07:32.63,Default,,0,0,0,,Được mệnh danh là ngôi sao mới đáng\Nkinh ngạc của đội bóng rổ Kainan và Shoyo.
Dialogue: 0,0:07:32.72,0:07:34.84,Default,,0,0,0,,Họ là Fujima Kenji và Maki Shinichi.
Dialogue: 0,0:07:35.68,0:07:36.36,Default,,0,0,0,,Với tình hình trước mắt
Dialogue: 0,0:07:36.47,0:07:38.40,Default,,0,0,0,,thì Maki có vẻ mạnh hơn Fujima một chút.
Dialogue: 0,0:07:38.78,0:07:39.98,Default,,0,0,0,,Tôi thấy từ nay về sau,
Dialogue: 0,0:07:40.10,0:07:42.67,Default,,0,0,0,,tỉnh Kanagawa sẽ trở thành thiên hạ\Ncủa hai người họ.
Dialogue: 0,0:07:45.12,0:07:47.99,Default,,0,0,0,,[Fujima Kenji, Maki Shinichi.]
Dialogue: 0,0:07:49.84,0:07:51.95,Default,,0,0,0,,- Tốt.\N- Chơi hay lắm Maki.
Dialogue: 0,0:07:52.77,0:07:55.93,Default,,0,0,0,,Phải rồi, hai cậu là\Nhọc sinh trường cấp ba nào thế?
Dialogue: 0,0:07:57.09,0:07:58.21,Default,,0,0,0,,Shohoku.
Dialogue: 0,0:07:59.22,0:08:00.12,Default,,0,0,0,,Johoku?
Dialogue: 0,0:08:00.49,0:08:01.58,Default,,0,0,0,,Là Shohoku.
Dialogue: 0,0:08:01.95,0:08:03.14,Default,,0,0,0,,Shohotoku?
Dialogue: 0,0:08:04.89,0:08:07.24,Default,,0,0,0,,Chú nhìn kỹ, hãy nhìn kỹ mặt tôi này.
Dialogue: 0,0:08:07.26,0:08:09.61,Default,,0,0,0,,Không phải một năm thì là hai năm sau,
Dialogue: 0,0:08:10.26,0:08:12.63,Default,,0,0,0,,đến lúc đó, tôi nhất định sẽ đánh bại họ.
Dialogue: 0,0:08:20.61,0:08:21.80,Default,,0,0,0,,[Đáng ghét.]
Dialogue: 0,0:08:22.31,0:08:25.00,Default,,0,0,0,,[Rồi sẽ có ngày tôi đánh bại các cậu.]
Dialogue: 0,0:08:25.83,0:08:27.67,Default,,0,0,0,,Tập thêm lần nữa đi.
Dialogue: 0,0:08:28.07,0:08:30.77,Default,,0,0,0,,Thôi được rồi Akagi,\Nhôm nay chúng ta tập đến đây thôi.
Dialogue: 0,0:08:38.02,0:08:39.49,Default,,0,0,0,,Tập thêm một lần nữa đi.
Dialogue: 0,0:08:40.01,0:08:43.34,Default,,0,0,0,,Lọt vào vòng chung kết của giải đấu\Ntoàn quốc không biết là cảm giác thế nào.
Dialogue: 0,0:08:43.94,0:08:45.38,Default,,0,0,0,,Tôi hoàn toàn không dám tưởng tượng.
Dialogue: 0,0:08:46.31,0:08:47.41,Default,,0,0,0,,Cậu vô dụng quá đi.
Dialogue: 0,0:08:48.12,0:08:49.41,Default,,0,0,0,,Chỉ như này thôi mà khiến cậu gục ngã rồi à.
Dialogue: 0,0:08:49.67,0:08:52.78,Default,,0,0,0,,Tôi chỉ muốn được vui vẻ chơi bóng thôi.
Dialogue: 0,0:08:52.87,0:08:55.35,Default,,0,0,0,,Akagi, tôi không thể\Nhòa hợp với mọi người được.
Dialogue: 0,0:08:56.41,0:08:59.13,Default,,0,0,0,,[Đáng ghét, không ai muốn thắng ư?]
Dialogue: 0,0:09:05.94,0:09:07.71,Default,,0,0,0,,Phòng thủ, phòng thủ.
Dialogue: 0,0:09:10.34,0:09:12.07,Default,,0,0,0,,Cố lên, Akagi.
Dialogue: 0,0:09:17.41,0:09:18.23,Default,,0,0,0,,Lợi hại thật.
Dialogue: 0,0:09:18.36,0:09:20.91,Default,,0,0,0,,Cái tên đó có thật sự là bị chấn thương không?
Dialogue: 0,0:09:25.42,0:09:27.98,Default,,0,0,0,,Xem ra em không cần lo
Dialogue: 0,0:09:28.08,0:09:29.67,Default,,0,0,0,,anh sẽ cản trở thiên tài em đây rồi,\NTinh Tinh Bự.
Dialogue: 0,0:09:41.25,0:09:42.41,Default,,0,0,0,,Đùa gì hả?
Dialogue: 0,0:09:43.68,0:09:44.87,Default,,0,0,0,,Đến đây đi, Maki.
Dialogue: 0,0:09:48.26,0:09:51.71,Default,,0,0,0,,[Lần đầu tiên tôi thấy\Ntôn trọng đối thủ của mình như thế.]
Dialogue: 0,0:09:54.46,0:09:56.49,Default,,0,0,0,,[Tôi phải dùng hết sức mình\Nđể đánh bại các cậu.]
Dialogue: 0,0:10:01.03,0:10:01.93,Default,,0,0,0,,[Đến nào.]
Dialogue: 0,0:10:02.94,0:10:05.17,Default,,0,0,0,,[Miyagi chưa từng cảm thấy mệt mỏi đến vậy.]
Dialogue: 0,0:10:06.17,0:10:07.73,Default,,0,0,0,,[Bởi vì trong 20 phút ở nửa trận đầu,]
Dialogue: 0,0:10:08.14,0:10:09.85,Default,,0,0,0,,[cậu ấy cứ bị phòng thủ bởi\Nchàng trai cao hơn bản thân 16cm,]
Dialogue: 0,0:10:09.95,0:10:13.35,Default,,0,0,0,,[chiều cao vượt trội so với học sinh cấp ba,\NMaki.]
Dialogue: 0,0:10:15.38,0:10:19.04,Default,,0,0,0,,[Vì thế mà anh hùng phía sau của nửa trận đầu\Ncó thể nói là Miyagi.]
Dialogue: 0,0:10:20.21,0:10:23.67,Default,,0,0,0,,[Nhưng cậu ấy cứ luôn có một tâm trạng bất an.]
Dialogue: 0,0:10:25.72,0:10:28.78,Default,,0,0,0,,[Nói không chừng Maki vẫn chưa\Nthật sự tập trung vào trận đấu.]
Dialogue: 0,0:10:31.06,0:10:31.82,Default,,0,0,0,,[Đến rồi.]
Dialogue: 0,0:10:35.80,0:10:36.76,Default,,0,0,0,,Tiêu rồi.
Dialogue: 0,0:10:42.67,0:10:43.47,Default,,0,0,0,,[Maki.]
Dialogue: 0,0:10:59.49,0:11:01.11,Default,,0,0,0,,Ghi điểm, phạt thêm một quả.
Dialogue: 0,0:11:02.96,0:11:05.02,Default,,0,0,0,,Gì mà ghi điểm rồi còn phạt thêm quả nữa chứ.
Dialogue: 0,0:11:05.79,0:11:08.66,Default,,0,0,0,,Chính là khi người ném rổ gặp phải\Nsự cản trở phạm lỗi của đối thủ,
Dialogue: 0,0:11:08.87,0:11:10.52,Default,,0,0,0,,mà bóng vẫn vào rổ,
Dialogue: 0,0:11:10.65,0:11:12.69,Default,,0,0,0,,thì bóng được tính điểm\Nvà có thể phạt thêm một quả.
Dialogue: 0,0:11:14.60,0:11:16.08,Default,,0,0,0,,Làm tốt lắm, Maki.
Dialogue: 0,0:11:18.14,0:11:18.71,Default,,0,0,0,,[Maki,]
Dialogue: 0,0:11:19.39,0:11:22.44,Default,,0,0,0,,[vượt qua người\Ncó tốc độ nhanh nhất Shohoku - Miyagi,]
Dialogue: 0,0:11:22.98,0:11:25.40,Default,,0,0,0,,[và chạm mặt với\Nngười có sức mạnh mạnh nhất Shohoku - Akagi,]
Dialogue: 0,0:11:25.89,0:11:27.55,Default,,0,0,0,,[vậy mà vẫn có thể ném bóng ghi điểm.]
Dialogue: 0,0:11:32.72,0:11:34.31,Default,,0,0,0,,Đó chính là kỹ thuật bóng của Maki.
Dialogue: 0,0:11:34.99,0:11:36.91,Default,,0,0,0,,Tấn công nhanh quả quyết tích cực.
Dialogue: 0,0:11:37.02,0:11:39.51,Default,,0,0,0,,Dùng sức mạnh để vượt qua người khác,\Nchấp nhận tấn công phạm lỗi của đối phương,
Dialogue: 0,0:11:39.69,0:11:41.22,Default,,0,0,0,,và rồi ném quả bóng ba điểm.
Dialogue: 0,0:11:41.80,0:11:43.28,Default,,0,0,0,,Cùng là hậu vệ giữ bóng,
Dialogue: 0,0:11:43.38,0:11:45.83,Default,,0,0,0,,so với Fujima của Shoyo,\Ncậu ấy quyết đoán hơn.
Dialogue: 0,0:11:45.92,0:11:46.93,Default,,0,0,0,,Đó chính là sức mạnh của cậu ấy.
Dialogue: 0,0:11:47.78,0:11:51.41,Default,,0,0,0,,Cái cậu ấy có là kỹ thuật bóng số một,\Nkhông ai sánh bằng.
Dialogue: 0,0:11:56.40,0:11:58.86,Default,,0,0,0,,Tốt, tốt, Maki.
Dialogue: 0,0:11:58.98,0:12:01.57,Default,,0,0,0,,Kainan lại dẫn trước nữa rồi.
Dialogue: 0,0:12:01.98,0:12:04.34,Default,,0,0,0,,Đồ trung niên đáng ghét.
Dialogue: 0,0:12:04.45,0:12:07.90,Default,,0,0,0,,- Thay đổi tâm trạng, dốc hết sức tấn công.\N- Được.
Dialogue: 0,0:12:08.59,0:12:09.48,Default,,0,0,0,,[Akagi.]
Dialogue: 0,0:12:15.66,0:12:17.02,Default,,0,0,0,,- Kogure.\N- Vâng.
Dialogue: 0,0:12:17.70,0:12:20.71,Default,,0,0,0,,Đi khởi động đi, chuẩn bị ra sân bất cứ lúc nào.
Dialogue: 0,0:12:21.17,0:12:22.19,Default,,0,0,0,,Vâng.
Dialogue: 0,0:12:27.94,0:12:29.03,Default,,0,0,0,,Tiếng reo hò lớn quá.
Dialogue: 0,0:12:29.71,0:12:31.97,Default,,0,0,0,,Rukawa bất ngờ nổi tiếng nhờ trận đấu này.
Dialogue: 0,0:12:32.90,0:12:34.23,Default,,0,0,0,,[Cái tên Rukawa.]
Dialogue: 0,0:12:39.62,0:12:41.45,Default,,0,0,0,,Sức công phá của Nobunaga\Nthật đáng kinh ngạc.
Dialogue: 0,0:12:42.91,0:12:44.67,Default,,0,0,0,,Maki đã nhờ tôi rồi.
Dialogue: 0,0:12:45.11,0:12:46.44,Default,,0,0,0,,Tôi sẽ không để cậu đắc ý nữa đâu.
Dialogue: 0,0:12:50.75,0:12:51.61,Default,,0,0,0,,Rukawa.
Dialogue: 0,0:12:56.45,0:12:59.29,Default,,0,0,0,,Ghi điểm rồi.\NShohoku cũng không hề chịu thua.
Dialogue: 0,0:13:01.26,0:13:02.52,Default,,0,0,0,,Tốt.
Dialogue: 0,0:13:04.06,0:13:07.03,Default,,0,0,0,,Tinh thần đã vượt qua thể xác rồi.
Dialogue: 0,0:13:28.42,0:13:29.72,Default,,0,0,0,,Tốt.
Dialogue: 0,0:13:31.29,0:13:34.16,Default,,0,0,0,,[Cái tên đó cũng bắt đầu rực cháy lên rồi.]
Dialogue: 0,0:13:35.51,0:13:36.57,Default,,0,0,0,,[Đáng ghét.]
Dialogue: 0,0:13:38.77,0:13:41.64,Default,,0,0,0,,[Miyagi đúng là hậu vệ\Ncó tố chất đào tạo nhất tỉnh.]
Dialogue: 0,0:13:42.34,0:13:45.24,Default,,0,0,0,,[Nhưng về ngoại hình, thể lực,\Nsự lãnh đạo và kinh nghiệm,]
Dialogue: 0,0:13:45.61,0:13:47.63,Default,,0,0,0,,[Maki giỏi hơn cậu ta về mọi mặt.]
Dialogue: 0,0:13:48.78,0:13:50.47,Default,,0,0,0,,Quả nhiên vẫn là Maki giỏi nhất.
Dialogue: 0,0:13:54.68,0:13:55.62,Default,,0,0,0,,Đừng hòng vào rổ.
Dialogue: 0,0:14:07.00,0:14:09.23,Default,,0,0,0,,- Thật không hổ danh là Maki.\N- Tốt.
Dialogue: 0,0:14:14.77,0:14:16.24,Default,,0,0,0,,Rõ ràng là em đã đánh trúng anh ta.
Dialogue: 0,0:14:17.24,0:14:19.71,Default,,0,0,0,,[Có thể điều khiển cơ thể đến mức này,]
Dialogue: 0,0:14:20.04,0:14:21.77,Default,,0,0,0,,[cộng thêm chấp niệm giành chiến thắng.]
Dialogue: 0,0:14:22.81,0:14:25.91,Default,,0,0,0,,[Đó là chấp niệm giành chiến thắng\Nmãi không hài lòng, là khát khao chiến thắng.]
Dialogue: 0,0:14:27.22,0:14:30.71,Default,,0,0,0,,[Đây chính là sức mạnh của nguời đã giao đấu\Nvới đội mạnh toàn quốc,]
Dialogue: 0,0:14:31.62,0:14:33.88,Default,,0,0,0,,[Maki Shinichi của\Ntrường cấp ba trực thuộc Đại học Kainan ư?]
Dialogue: 0,0:14:40.23,0:14:41.42,Default,,0,0,0,,Hãy nhớ cho kỹ,
Dialogue: 0,0:14:42.26,0:14:44.46,Default,,0,0,0,,đó chính là cầu thủ số một của tỉnh Kanagawa,
Dialogue: 0,0:14:44.87,0:14:46.13,Default,,0,0,0,,Maki Shinichi.
Dialogue: 0,0:14:46.77,0:14:48.50,Default,,0,0,0,,Cầu thủ số một của tỉnh Kanagawa.
Dialogue: 0,0:14:54.08,0:14:55.87,Default,,0,0,0,,[Vang dội biết bao.]
Dialogue: 0,0:14:57.75,0:14:58.94,Default,,0,0,0,,Không thể thua.
Dialogue: 0,0:14:59.28,0:15:00.31,Default,,0,0,0,,Đã đi đến đây rồi,
Dialogue: 0,0:15:00.78,0:15:02.11,Default,,0,0,0,,sao có thể thua cho họ được.
Dialogue: 0,0:15:02.29,0:15:05.33,Default,,0,0,0,,- Tốt.\N- Nói hay lắm, Ryota.
Dialogue: 0,0:15:05.93,0:15:07.66,Default,,0,0,0,,Đồ trung niên cứ giao cho em là được rồi.
Dialogue: 0,0:15:09.00,0:15:12.52,Default,,0,0,0,,- Đồ ngu.\N- Cậu bị ngu à, lại không biết lượng sức mình.
Dialogue: 0,0:15:12.62,0:15:13.71,Default,,0,0,0,,Cái gì chứ?
Dialogue: 0,0:15:16.63,0:15:17.42,Default,,0,0,0,,Chuyền bóng có sơ suất rồi.
Dialogue: 0,0:15:18.13,0:15:19.29,Default,,0,0,0,,Mọi người đều đã mệt rồi.
Dialogue: 0,0:15:20.06,0:15:23.00,Default,,0,0,0,,Không chỉ là Ryota, anh Mitsui,\NRukawa cũng mệt rồi.
Dialogue: 0,0:15:27.67,0:15:30.00,Default,,0,0,0,,Chơi hay lắm, Maki đã dốc hết sức tấn công rồi.
Dialogue: 0,0:15:34.54,0:15:36.94,Default,,0,0,0,,Họ đã bị Maki kiềm lại rồi.
Dialogue: 0,0:15:37.71,0:15:40.65,Default,,0,0,0,,Nếu không ngăn sự mất điểm lúc này\Nthì không thể lật ngược tình thế nữa.
Dialogue: 0,0:15:41.18,0:15:43.24,Default,,0,0,0,,Muốn để một người giữ lấy Maki\Nlà không thể nào được.
Dialogue: 0,0:15:43.75,0:15:45.49,Default,,0,0,0,,Nếu không thu nhỏ phạm vi phòng thủ,
Dialogue: 0,0:15:45.51,0:15:48.36,Default,,0,0,0,,củng cố đường trong, họ sẽ tiếp tục mất điểm.
Dialogue: 0,0:15:50.29,0:15:52.12,Default,,0,0,0,,Họ cần có người chỉ lối cho họ.
Dialogue: 0,0:15:56.37,0:15:57.66,Default,,0,0,0,,Hai người giữ một người.
Dialogue: 0,0:16:00.64,0:16:01.97,Default,,0,0,0,,Hai người đủ ư?
Dialogue: 0,0:16:04.44,0:16:05.41,Default,,0,0,0,,Vượt qua rồi.
Dialogue: 0,0:16:11.78,0:16:14.65,Default,,0,0,0,,Cậu ta chuẩn bị vào tư thế ném bóng rồi,\Nmau chặn cậu ta lại.
Dialogue: 0,0:16:15.25,0:16:16.18,Default,,0,0,0,,Bắt được cơ hội rồi.
Dialogue: 0,0:16:18.15,0:16:19.98,Default,,0,0,0,,Tôi biết ngay các cậu sẽ làm thế này mà.
Dialogue: 0,0:16:24.36,0:16:25.55,Default,,0,0,0,,Jin.
Dialogue: 0,0:16:29.70,0:16:30.86,Default,,0,0,0,,Bóng ba điểm.
Dialogue: 0,0:16:55.69,0:16:58.85,Default,,0,0,0,,Ném hay lắm, Jin,\Nanh là thiên tài bóng ba điểm đó.
Dialogue: 0,0:17:03.23,0:17:06.00,Default,,0,0,0,,[Động tác ném bóng của cậu ta\Nvừa đẹp vừa mềm mại.]
Dialogue: 0,0:17:06.80,0:17:08.57,Default,,0,0,0,,[Trong trận đấu kích liệt như vậy,]
Dialogue: 0,0:17:09.00,0:17:10.63,Default,,0,0,0,,[thời gian như ngưng lại.]
Dialogue: 0,0:17:11.44,0:17:14.07,Default,,0,0,0,,[Động tác của cậu ta linh hoạt đến nỗi\Nkhiến người khác nổi da gà.]
Dialogue: 0,0:17:17.78,0:17:19.15,Default,,0,0,0,,Mitsui, ném đi.
Dialogue: 0,0:17:19.72,0:17:21.27,Default,,0,0,0,,Nói về tài năng ném bóng ba điểm,
Dialogue: 0,0:17:21.68,0:17:23.54,Default,,0,0,0,,Mitsui không nên thua cậu ta mới đúng.
Dialogue: 0,0:17:24.32,0:17:25.45,Default,,0,0,0,,Tài năng?
Dialogue: 0,0:17:30.19,0:17:31.52,Default,,0,0,0,,Tài năng ư?
Dialogue: 0,0:17:33.00,0:17:36.62,Default,,0,0,0,,[Lúc vào Jin gia nhập vào đội bóng,\Ntài năng đặc biệt gì cũng không có.]
Dialogue: 0,0:17:37.53,0:17:40.00,Default,,0,0,0,,[Chí ít, tôi nghĩ là vậy.]
Dialogue: 0,0:17:40.77,0:17:42.03,Default,,0,0,0,,Em là Jin Soichiro,
Dialogue: 0,0:17:42.54,0:17:43.53,Default,,0,0,0,,trung phong.
Dialogue: 0,0:17:43.72,0:17:45.29,Default,,0,0,0,,Xin được mọi người chỉ giáo.
Dialogue: 0,0:17:45.89,0:17:49.55,Default,,0,0,0,,[Một cậu bé mong manh như vậy\Ntham gia đội bóng rổ không sao chứ?]
Dialogue: 0,0:17:50.53,0:17:52.32,Default,,0,0,0,,[Chạy cũng không nhanh lắm.]
Dialogue: 0,0:17:53.13,0:17:54.62,Default,,0,0,0,,[Sức nhảy cũng bình thường.]
Dialogue: 0,0:17:55.00,0:17:57.96,Default,,0,0,0,,[Về mặt khả năng thể thao,\Nhoàn toàn không thể so sánh với Maki,]
Dialogue: 0,0:17:57.98,0:18:00.52,Default,,0,0,0,,[và người mới gia nhập năm nay - Kiyota.]
Dialogue: 0,0:18:01.10,0:18:06.42,Default,,0,0,0,,[Tôi nói với Jin, người bị Maki và Takasago\Nlàm cho kiệt sức khi luyện tập]
Dialogue: 0,0:18:06.56,0:18:08.69,Default,,0,0,0,,[rằng cậu ấy\Nkhông thể nào trở thành trung phong.]
Dialogue: 0,0:18:09.40,0:18:11.16,Default,,0,0,0,,[Những lời này\Nsẽ làm tổn thương một cậu học sinh cấp ba.]
Dialogue: 0,0:18:13.84,0:18:15.36,Default,,0,0,0,,[Cậu ấy không cam tâm?]
Dialogue: 0,0:18:16.84,0:18:18.47,Default,,0,0,0,,[Đương nhiên là cậu ấy không cam tâm rồi.]
Dialogue: 0,0:18:21.81,0:18:22.92,Default,,0,0,0,,[Bắt đầu từ hôm đó,]
Dialogue: 0,0:18:23.04,0:18:26.56,Default,,0,0,0,,[sau khi kết thúc buổi tập,\Ntôi nhìn thấy một mình Jin]
Dialogue: 0,0:18:26.58,0:18:29.09,Default,,0,0,0,,[tự tập ném bóng ngoài vòng.]
Dialogue: 0,0:18:29.95,0:18:34.04,Default,,0,0,0,,[Tôi đột nhiên nhận ra,\Ncậu ấy không phải không hề có tài năng.]
Dialogue: 0,0:18:34.69,0:18:39.06,Default,,0,0,0,,[Cậu ấy có ý chí chiến đấu mạnh mẽ,\Nvà tư thế ném bóng đẹp.]
Dialogue: 0,0:18:39.71,0:18:40.83,Default,,0,0,0,,Tấn công nhanh.
Dialogue: 0,0:18:43.51,0:18:45.31,Default,,0,0,0,,[Là Maki hay là Jin.]
Dialogue: 0,0:18:45.98,0:18:49.14,Default,,0,0,0,,[Một người ném giỏi cần phải có tài năng.]
Dialogue: 0,0:18:50.02,0:18:54.01,Default,,0,0,0,,[Mitsui, cầu thủ xuất sắc nhất thời cấp hai,\Ncó lẽ là có tài năng như thế,]
Dialogue: 0,0:18:54.69,0:18:58.49,Default,,0,0,0,,[nhưng mà người ném bóng thực thụ\Nlà nhờ vào sự tập luyện chăm chỉ mà ra.]
Dialogue: 0,0:18:59.02,0:19:03.39,Default,,0,0,0,,[Chỉ cần không ngừng chăm chỉ tập luyện,\Nmới có thể nâng cao tỷ lệ thành công khi ném bóng.]
Dialogue: 0,0:19:07.07,0:19:11.03,Default,,0,0,0,,[Sau ngày hôm đó,\Nmỗi ngày Jin tập ít nhất là 500 lần ném rổ.]
Dialogue: 0,0:19:14.64,0:19:17.03,Default,,0,0,0,,Thật không tin được, lại vào rồi.
Dialogue: 0,0:19:17.64,0:19:20.01,Default,,0,0,0,,Trong có Maki, ngoài có Jin.
Dialogue: 0,0:19:20.85,0:19:23.58,Default,,0,0,0,,Làm sao để vượt qua cặp đôi mạnh này.
Dialogue: 0,0:19:24.32,0:19:25.31,Default,,0,0,0,,Không hay rồi.
Dialogue: 0,0:19:25.58,0:19:28.15,Default,,0,0,0,,Những điểm số mà Rukawa vất vả kéo về,
Dialogue: 0,0:19:28.27,0:19:30.05,Default,,0,0,0,,lại bị Kainan\Ngiành lấy lại một cách nhẹ nhàng rồi.
Dialogue: 0,0:19:33.60,0:19:34.78,Default,,0,0,0,,Đáng ghét.
Dialogue: 0,0:19:35.14,0:19:37.04,Default,,0,0,0,,Mạnh, quả nhiên là rất mạnh.
Dialogue: 0,0:19:38.14,0:19:41.41,Default,,0,0,0,,[Kainan tập chăm chỉ hơn\Nbất kỳ một trường nào.]
Dialogue: 0,0:19:41.95,0:19:44.38,Default,,0,0,0,,[Cầu thủ có tư cách ra sân,]
Dialogue: 0,0:19:44.52,0:19:47.15,Default,,0,0,0,,[đều đã bỏ ra\Nkhông biết bao nhiêu mồ hôi công sức.]
Dialogue: 0,0:19:47.56,0:19:50.17,Default,,0,0,0,,Được rồi, chỉ còn lại mười phút thôi,\Nkhông được thả lỏng.
Dialogue: 0,0:19:54.14,0:19:55.76,Default,,0,0,0,,[Đội bóng của chúng tôi\Nkhông có thiên tài,]
Dialogue: 0,0:19:56.27,0:19:58.85,Default,,0,0,0,,[nhưng, chúng tôi là mạnh nhất.]
Dialogue: 0,0:20:02.03,0:20:04.19,Default,,0,0,0,,Shohoku tạm dừng.
Dialogue: 0,0:20:05.16,0:20:08.29,Default,,0,0,0,,Xem ra huấn luyện viên Anzai đã bị\Ndồn ép đến mức không thể không tạm dừng.
Dialogue: 0,0:20:09.10,0:20:11.83,Default,,0,0,0,,Rất rõ ràng là Shohoku đã\Ntrong tình trạng dầu sôi lửa bỏng rồi.
Dialogue: 0,0:20:12.37,0:20:14.00,Default,,0,0,0,,Không còn sức lực nữa rồi.
Dialogue: 0,0:20:17.11,0:20:20.24,Default,,0,0,0,,- Tiếc thật, họ chơi tốt như vậy.\N- Không đúng.
Dialogue: 0,0:20:22.93,0:20:24.30,Default,,0,0,0,,Thầy còn quên một người nữa.
Dialogue: 0,0:20:24.65,0:20:26.11,Default,,0,0,0,,Vẫn còn một người có tràn đầy năng lượng.
Dialogue: 0,0:20:30.92,0:20:33.08,Default,,0,0,0,,Tôi biết là có hơi sớm,\Nnhưng bây giờ đã không còn thời gian nữa rồi.
Dialogue: 0,0:20:34.22,0:20:35.78,Default,,0,0,0,,Chuẩn bị quyết chiến một phen.
Dialogue: 0,0:20:45.30,0:20:46.96,Default,,0,0,0,,[Shohoku chỉ dẫn trước trong chốc lát.]
Dialogue: 0,0:20:47.60,0:20:51.16,Default,,0,0,0,,[Dưới sự chỉ huy của Maki\Nvà người ném bóng xuất sắc Jin,]
Dialogue: 0,0:20:51.81,0:20:54.30,Default,,0,0,0,,[một lần nữa Kainan đã\Nkéo khoảng cách tỷ số gần lại.]
Dialogue: 0,0:20:55.98,0:20:59.97,Default,,0,0,0,,[Rốt cuộc thì huấn luyện viên Anzai\Nsẽ dàn chiến thuật thế nào đây?]
Dialogue: 0,0:21:12.27,0:21:15.07,Default,,0,0,0,,♫ Trong giấc mơ nhếch nhác thảm hại ♫
