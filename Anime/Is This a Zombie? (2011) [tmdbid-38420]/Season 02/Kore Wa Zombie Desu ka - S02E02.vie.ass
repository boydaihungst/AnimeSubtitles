Dialogue: 0,0:00:02.77,0:00:04.39,Necro Notebook,,0000,0000,0000,,{\blur0.5}Sao vậy?
Dialogue: 0,0:00:04.39,0:00:07.57,Default,,0000,0000,0000,,Ayumu ngốc làm hỏng Mystletainn của tôi rồi.
Dialogue: 0,0:00:07.57,0:00:10.19,Default,,0000,0000,0000,,Nhỡ giờ mà Megalon xuất hiện thì tính sao đây?
Dialogue: 0,0:00:10.19,0:00:12.15,Default,,0000,0000,0000,,Danh tiếng của tôi sẽ bị đe dọa mất!
Dialogue: 0,0:00:12.15,0:00:13.40,Necro Notebook,,0000,0000,0000,,{\blur0.5}Ayumu đâu?
Dialogue: 0,0:00:13.40,0:00:15.05,Default,,0000,0000,0000,,Ai mà biết.
Dialogue: 0,0:00:15.05,0:00:17.16,Default,,0000,0000,0000,,Chắc đang chơi bời ở đâu đó chứ gì.
Dialogue: 0,0:00:21.82,0:00:24.09,Default,,0000,0000,0000,,Đừng bao giờ phải đến đây nữa nhé.
Dialogue: 0,0:00:24.70,0:00:27.24,Default,,0000,0000,0000,,Xin lỗi đã làm phiền chú ạ.
Dialogue: 0,0:00:33.98,0:00:35.94,Default,,0000,0000,0000,,Thời tiết đẹp ghê...
Dialogue: 0,0:00:37.04,0:00:37.95,Default,,0000,0000,0000,,Sera...
Dialogue: 0,0:00:39.23,0:00:43.92,Default,,0000,0000,0000,,Coi ai kia lại trần như nhộng ngay giữa sân trường...
Dialogue: 0,0:00:43.92,0:00:45.56,Default,,0000,0000,0000,,Đúng là tên cặn bã ngu ngốc.
Dialogue: 0,0:00:46.07,0:00:47.94,Default,,0000,0000,0000,,K-Không phải đâu, nghe tôi nói nè...
Dialogue: 0,0:00:47.94,0:00:50.94,Default,,0000,0000,0000,,Chẳng ngờ cậu vô sỉ đến vậy đấy...
Dialogue: 0,0:00:51.35,0:00:53.71,Default,,0000,0000,0000,,đồ loạn dâm vô trương cặn bã.
Dialogue: 0,0:00:56.34,0:01:01.41,Default,,0000,0000,0000,,Đôi khi, cuộc đời tôi lại rẽ sang những hướng không ngờ tới...
Dialogue: 0,0:01:01.41,0:01:04.96,Default,,0000,0000,0000,,Nhưng nếu đó là ý của Đất mẹ, tôi chỉ còn cách chấp nhận thôi.
Dialogue: 0,0:01:05.65,0:01:08.71,Default,,0000,0000,0000,,Phải, vì tôi là người được chọn.
Dialogue: 0,0:01:11.20,0:01:13.46,Default,,0000,0000,0000,,Cái mông vẫn tuyệt biết nhường nào...
Dialogue: 0,0:01:13.87,0:01:14.91,Default,,0000,0000,0000,,ông xã của ta!
