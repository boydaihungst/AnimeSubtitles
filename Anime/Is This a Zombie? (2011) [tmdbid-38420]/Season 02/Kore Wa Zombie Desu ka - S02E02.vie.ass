Dialogue: 0,0:03:30.70,0:03:36.90,Default,,0000,0000,0000,,Chắc chắn mọi người ở trường\N sau khi biết chuyện đó sẽ thấy ghê tởm mình.
Dialogue: 0,0:03:37.22,0:03:39.98,Default,,0000,0000,0000,,Nhưng mình cũng chỉ còn cách chấp nhận thôi.
Dialogue: 0,0:03:41.31,0:03:44.26,Default,,0000,0000,0000,,Một khi đã được chọn thì dù như thế nào\N cũng không thể tránh khỏi.
Dialogue: 0,0:03:44.26,0:03:46.05,Default,,0000,0000,0000,,Đó là sự tàn nhẫn của số phận.
Dialogue: 0,0:03:54.12,0:03:55.39,Default,,0000,0000,0000,,Tuyệt lắm, Aikawa!
Dialogue: 0,0:03:55.39,0:03:56.62,Default,,0000,0000,0000,,Đúng đó, đúng đó!
Dialogue: 0,0:03:58.65,0:04:00.42,Default,,0000,0000,0000,,Cậu trở nên nổi tiếng rồi nè!
Dialogue: 0,0:04:01.28,0:04:06.43,Default,,0000,0000,0000,,Mọi người giờ đang đồn rộn lên\N là sẽ có thật nhiều nhà báo đến viết chuyện về cậu đó!
Dialogue: 0,0:04:07.49,0:04:09.30,Default,,0000,0000,0000,,Ưm. Chắc chắn sẽ đến đó!
Dialogue: 0,0:04:09.30,0:04:10.47,Default,,0000,0000,0000,,Không phải chứ?
Dialogue: 0,0:04:10.86,0:04:14.19,Default,,0000,0000,0000,,Thế này thì chẳng mấy chốc cậu sẽ được lên TV cho xem.
Dialogue: 0,0:04:14.19,0:04:15.25,Default,,0000,0000,0000,,Ghê dữ!
Dialogue: 0,0:04:15.25,0:04:16.66,Default,,0000,0000,0000,,Ngầu quá!
Dialogue: 0,0:04:16.66,0:04:18.57,Default,,0000,0000,0000,,Um, Aikawa-kun...
Dialogue: 0,0:04:18.57,0:04:21.99,Default,,0000,0000,0000,,Suốt hôm qua, tớ cứ suy nghĩ mãi...
Dialogue: 0,0:04:21.99,0:04:24.91,Default,,0000,0000,0000,,rồi tớ nhận ra đúng là Aikawa-kun ngầu thật.
Dialogue: 0,0:04:24.91,0:04:27.08,Default,,0000,0000,0000,,{\i1}Không cần nghĩ kĩ đến thế đâu...!{\i0}
Dialogue: 0,0:04:27.08,0:04:29.08,Default,,0000,0000,0000,,Không không, Tea-chan. "Thấy gớm" chứ.
Dialogue: 0,0:04:29.49,0:04:31.20,Default,,0000,0000,0000,,{\i1}Chuyện gì đang diễn ra thế này?{\i0}
Dialogue: 0,0:04:31.20,0:04:33.53,Default,,0000,0000,0000,,{\i1}Kì lạ quá! Ai đó cứu với!{\i0}
Dialogue: 0,0:04:34.53,0:04:35.25,Default,,0000,0000,0000,,Orito!
Dialogue: 0,0:04:38.98,0:04:39.59,Default,,0000,0000,0000,,Này!
Dialogue: 0,0:04:40.22,0:04:41.15,Default,,0000,0000,0000,,{\i1}Orito?{\i0}
Dialogue: 0,0:04:43.77,0:04:46.94,Default,,0000,0000,0000,,Chân của Aikawa-kun... đẹp lắm.
Dialogue: 0,0:04:50.84,0:04:52.48,Default,,0000,0000,0000,,A... xin lỗi...
Dialogue: 0,0:04:52.48,0:04:57.10,Default,,0000,0000,0000,,Đất mẹ ơi, làm sao con chấp nhận được số phận này đây?!
Dialogue: 0,0:05:01.03,0:05:03.50,Default,,0000,0000,0000,,Ôi cô tiên!
Dialogue: 0,0:05:04.64,0:05:08.32,Default,,0000,0000,0000,,Mừng quá. Hôm nay gặp được cô ở đây!
Dialogue: 2,0:05:09.70,0:05:11.49,Default,,0000,0000,0000,,Chuyện gì thế, Wakaizawa?
Dialogue: 0,0:05:11.49,0:05:14.40,Default,,0000,0000,0000,,Chả phải là chuyện gì đâu ạ!
Dialogue: 0,0:05:14.40,0:05:19.75,Default,,0000,0000,0000,,Chả hiểu sao nữa, nhưng đời con nhảy sang một hướng\N con chả bao giờ muốn rồi.
Dialogue: 0,0:05:19.75,0:05:21.80,Default,,0000,0000,0000,,Thế à...
Dialogue: 0,0:05:22.26,0:05:23.57,Default,,0000,0000,0000,,Rồi rồi...
Dialogue: 0,0:05:23.57,0:05:26.72,Default,,0000,0000,0000,,Con nào có muốn bị chú ý...
Dialogue: 0,0:05:27.23,0:05:29.21,Default,,0000,0000,0000,,Hôm nay lại uống nhé?
Dialogue: 0,0:05:29.21,0:05:32.03,Default,,0000,0000,0000,,À không, con chưa đủ tuổi...
Dialogue: 0,0:05:32.03,0:05:34.46,Default,,0000,0000,0000,,Thế hả... ngon lắm mà...
Dialogue: 0,0:05:36.52,0:05:39.57,Default,,0000,0000,0000,,Nếu được thì con đã muốn uống \Ncho tiêu sầu rồi...
Dialogue: 0,0:05:42.70,0:05:49.53,Default,,0000,0000,0000,,Scandal hả? Chuyện vặt... chuyện vặt... chuyện vặt thôi!
Dialogue: 0,0:05:49.90,0:05:50.90,Default,,0000,0000,0000,,Hờ...
Dialogue: 0,0:05:50.90,0:05:56.24,Default,,0000,0000,0000,,Ờ... đời có vấp thì chỉ cần đứng lên là xong mà!
Dialogue: 0,0:05:57.00,0:05:59.58,Default,,0000,0000,0000,,A... lại nói giống bà già nữa rồi...
Dialogue: 0,0:06:02.45,0:06:03.55,Default,,0000,0000,0000,,Hờ...
Dialogue: 0,0:06:03.94,0:06:10.68,Default,,0000,0000,0000,,Dù là chuyện gì, có xấu hổ thì cũng chỉ trong\N 3 tỉ 500 triệu 6 ngàn 575 ngày thôi... Người ta nói thế mà.
Dialogue: 0,0:06:12.48,0:06:14.66,Default,,0000,0000,0000,,Ý cô là 75 ngày à?
Dialogue: 0,0:06:15.19,0:06:17.31,Default,,0000,0000,0000,,Ưm, cũng đúng.
Dialogue: 0,0:06:17.83,0:06:19.40,Default,,0000,0000,0000,,Là thế nhỉ.
Dialogue: 0,0:06:19.88,0:06:21.97,Default,,0000,0000,0000,,Cô tiên, cám ơn cô.
Dialogue: 0,0:06:21.97,0:06:24.15,Default,,0000,0000,0000,,Con cảm thấy khá hơn nhiều rồi.
Dialogue: 0,0:06:24.15,0:06:27.65,Default,,0000,0000,0000,,OK! Khi nào lại tới nhé.
Dialogue: 0,0:06:31.11,0:06:34.06,Default,,0000,0000,0000,,{\i1}Chỉ là vấn đề thời gian à...{\i0}
Dialogue: 0,0:06:39.40,0:06:40.96,Default,,0000,0000,0000,,Cái bạn cưa máy đâu?
Dialogue: 0,0:06:40.96,0:06:43.24,Default,,0000,0000,0000,,Cái cậu mà "nomobuyo" ấy.
Dialogue: 0,0:06:43.24,0:06:45.17,Default,,0000,0000,0000,,Cậu ấy vừa chạy đi một chút.
Dialogue: 0,0:06:45.17,0:06:46.42,Default,,0000,0000,0000,,Các cậu cứ đứng đây đợi xem.
Dialogue: 0,0:06:47.58,0:06:49.43,Default,,0000,0000,0000,,Cậu ấy tuyệt lắm cơ!
Dialogue: 0,0:06:49.43,0:06:50.35,Default,,0000,0000,0000,,{\i1}Không được!{\i0}
Dialogue: 0,0:06:52.26,0:06:54.93,Default,,0000,0000,0000,,Này, Aikawa!
Dialogue: 0,0:06:55.48,0:06:56.49,Default,,0000,0000,0000,,Tomonori?
Dialogue: 0,0:06:56.49,0:07:00.06,Default,,0000,0000,0000,,Ôi trời, đã bảo đừng gọi thế\N bao nhiêu lần rồi.
Dialogue: 0,0:07:01.15,0:07:03.56,Default,,0000,0000,0000,,Gọi là Yuki cũng được mà...
Dialogue: 0,0:07:03.87,0:07:07.10,Default,,0000,0000,0000,,À... thế hả...
Dialogue: 0,0:07:07.67,0:07:10.66,Default,,0000,0000,0000,,Nè, đêm mai lên núi không?
Dialogue: 0,0:07:10.66,0:07:12.82,Default,,0000,0000,0000,,Núi? Lên núi làm gì?
Dialogue: 0,0:07:12.82,0:07:15.08,Default,,0000,0000,0000,,Cậu cưa máy! Cậu giả gái ý!
Dialogue: 0,0:07:15.86,0:07:19.14,Default,,0000,0000,0000,,Núi à... nghe được đấy nhỉ...
Dialogue: 0,0:07:20.05,0:07:21.58,Default,,0000,0000,0000,,Ngắm sao?
Dialogue: 0,0:07:23.70,0:07:26.58,Default,,0000,0000,0000,,Có khi... ở đó luôn cho rảnh.
Dialogue: 0,0:07:27.29,0:07:28.71,Default,,0000,0000,0000,,Chạy trốn thực tại à?
Dialogue: 0,0:07:29.09,0:07:30.72,Necro Notebook,,0000,0000,0000,,{\blur0.5}Ẩn danh cư sĩ?
Dialogue: 0,0:07:31.22,0:07:35.55,imajinary skrolling tekst,,0000,0000,0000,,{\be1}{\q2\blur0.5\move(2080,590,-792,590)}{\q2\blur0.5\move(2110,590,-822,590)}Đây là ảo tưởng của chàng nhân vật chính yếu đuối Aikawa Ayumu. (CV {\c&HEF83F6&}* {\r\blur0.5}Minami Omi)
Dialogue: 0,0:07:31.55,0:07:35.60,Default,,0000,0000,0020,,Onii-chan cứ là Onii-chan là được mà.
Dialogue: 0,0:07:36.69,0:07:40.69,Default,,0000,0000,0000,,Điều tôi muốn bây giờ\N là đến một nơi yên tĩnh không người thôi.
Dialogue: 0,0:07:41.34,0:07:42.85,Default,,0000,0000,0000,,Tomonori cũng nói...
Dialogue: 0,0:07:43.45,0:07:45.61,Default,,0000,0000,0000,,Thiên nhiên tuyệt lắm đó!
Dialogue: 0,0:07:45.61,0:07:49.23,Default,,0000,0000,0000,,Không khí thì trong lành, bầu trời đêm cũng đẹp hết ý...
Dialogue: 0,0:07:49.66,0:07:51.35,Default,,0000,0000,0000,,...rồi đại khái thế...
Dialogue: 0,0:07:51.35,0:07:55.71,Default,,0000,0000,0000,,nên tôi nghĩ biết đâu khi tận hưởng thiên nhiên...
Dialogue: 0,0:07:55.71,0:07:58.71,Default,,0000,0000,0000,,tôi sẽ quên được lời đàm tếu xung quanh cũng nên.
Dialogue: 0,0:07:59.33,0:08:01.62,Default,,0000,0000,0000,,Vậy là đi riêng với Yukinori à?
Dialogue: 0,0:08:02.32,0:08:03.20,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:08:05.04,0:08:07.00,Default,,0000,0000,0000,,G-Gì thế?
Dialogue: 0,0:08:16.55,0:08:18.75,Default,,0000,0000,0000,,A, Aikawa!
Dialogue: 0,0:08:21.06,0:08:21.96,Default,,0000,0000,0000,,Chào!
Dialogue: 0,0:08:21.96,0:08:23.50,Default,,0000,0000,0000,,Xin lỗi đã để cậu đợi nhé.
Dialogue: 0,0:08:23.50,0:08:25.50,Default,,0000,0000,0000,,Aikawa không đi một mình à...
Dialogue: 0,0:08:25.50,0:08:26.69,Default,,0000,0000,0000,,Có gì sao?
Dialogue: 0,0:08:26.69,0:08:27.64,Default,,0000,0000,0000,,Không...
Dialogue: 0,0:08:27.64,0:08:29.88,Default,,0000,0000,0000,,Ưm, cũng được.
Dialogue: 0,0:08:29.88,0:08:32.44,Default,,0000,0000,0000,,Nhưng ít nhất phải đi giày vào chứ.
Dialogue: 0,0:08:33.40,0:08:35.86,Default,,0000,0000,0000,,Tiểu tiết thì để ý làm gì.
Dialogue: 0,0:08:35.86,0:08:39.16,Default,,0000,0000,0000,,Nào. Mau mau đi lên trời ngắm sao thôi!
Dialogue: 0,0:08:39.16,0:08:40.91,Necro Notebook,,0000,0000,0000,,{\blur0.5}Lên trời ngắm sao -> Ngắm sao trên trời
Dialogue: 0,0:08:44.71,0:08:48.20,Default,,0000,0000,0000,,Hột vịt lộn lại hột vịt lạc nè!
Dialogue: 0,0:08:48.20,0:08:49.77,Default,,0000,0000,0000,,Hột vịt lộn lại...
Dialogue: 0,0:08:49.77,0:08:51.92,Default,,0000,0000,0000,,Zời ạ, chưa đến à?!
Dialogue: 0,0:08:53.11,0:08:56.25,Default,,0000,0000,0000,,Haruna, đừng có càu nhàu nữa.
Dialogue: 0,0:08:57.53,0:08:59.98,Default,,0000,0000,0000,,Mỏi chân! Mỏi chân! Mỏi chân quá rồi!
Dialogue: 0,0:08:59.98,0:09:02.76,Default,,0000,0000,0000,,Tại cậu đi dép leo núi đó!
Dialogue: 0,0:09:02.76,0:09:04.86,Default,,0000,0000,0000,,Trời ạ. Đừng có tưởng leo núi là dễ chứ!
Dialogue: 0,0:09:04.86,0:09:06.19,Default,,0000,0000,0000,,Sao không về đi cho rảnh!
Dialogue: 0,0:09:06.19,0:09:07.44,Default,,0000,0000,0000,,Thiệt tình mà!
Dialogue: 0,0:09:08.02,0:09:09.84,Default,,0000,0000,0000,,Đi tè đây!
Dialogue: 0,0:09:09.84,0:09:13.32,Default,,0000,0000,0000,,Haruna, chỗ này không có nhà xí đâu.
Dialogue: 0,0:09:13.32,0:09:15.20,Default,,0000,0000,0000,,Biết rồi!
Dialogue: 0,0:09:18.18,0:09:21.03,Default,,0000,0000,0000,,Thiệt tình, người đâu mà nhiễu quá.
Dialogue: 0,0:09:22.47,0:09:24.58,Default,,0000,0000,0000,,Nhìn thấy sao rồi nè...
Dialogue: 0,0:09:25.02,0:09:29.80,Default,,0000,0000,0000,,Từ chỗ mình sắp đến\N sẽ thấy còn đẹp hơn nhiều cơ.
Dialogue: 0,0:09:31.14,0:09:34.75,Default,,0000,0000,0000,,Đến lúc đó, bảo đảm mọi ưu phiền của cậu\N sẽ tiêu tan hết cho xem.
Dialogue: 0,0:09:34.75,0:09:36.30,Default,,0000,0000,0000,,Nghe hay nhỉ.
Dialogue: 0,0:09:36.30,0:09:39.26,Default,,0000,0000,0000,,Ồ, vậy ra cô cũng cất công vì Ayumu quá nhỉ.
Dialogue: 0,0:09:40.18,0:09:42.18,Default,,0000,0000,0000,,K-Không phải đâu nhé!
Dialogue: 0,0:09:42.18,0:09:44.52,Default,,0000,0000,0000,,Bởi vì năm nào tôi cũng đến đây mà!
Dialogue: 0,0:09:45.10,0:09:46.68,Default,,0000,0000,0000,,Nên năm nay...
Dialogue: 0,0:09:47.20,0:09:51.73,Default,,0000,0000,0000,,tôi nghĩ nên cho Aikawa xem với...
Dialogue: 0,0:09:51.73,0:09:53.61,Default,,0000,0000,0000,,Hể, thế à.
Dialogue: 0,0:09:53.61,0:09:55.24,Necro Notebook,,0000,0000,0000,,{\blur0.5}Ayumu may mắn ghê.
Dialogue: 0,0:09:56.77,0:09:58.24,Default,,0000,0000,0000,,Đã bảo không phải mà!
Dialogue: 0,0:09:58.85,0:10:01.34,Default,,0000,0000,0000,,Cơ mà sao Haruna đi lâu thế?
Dialogue: 0,0:10:01.34,0:10:02.99,Default,,0000,0000,0000,,Quanh đây có lợn rừng nên không an toàn đâu!
Dialogue: 0,0:10:02.99,0:10:04.75,Necro Notebook,,0000,0000,0000,,{\blur0.5}Đi một mình nguy hiểm lắm.
Dialogue: 0,0:10:05.20,0:10:09.58,imajinary skrolling tekst,,0000,0000,0000,,{\be1}{\q2\blur0.5\move(2080,590,-792,590)}{\q2\blur0.5\move(2110,590,-822,590)}Đây là ảo tưởng của chàng nhân vật chính yếu đuối Aikawa Ayumu. (CV {\c&HEF83F6&}* {\r\blur0.5}Minami Omi)
Dialogue: 0,0:10:05.20,0:10:09.20,Default,,0000,0000,0020,,Không nên để con gái đi một mình nhé, Onii-chan!
Dialogue: 0,0:10:10.22,0:10:13.12,Default,,0000,0000,0000,,Thiệt tình... cái nhỏ Haruna này...
Dialogue: 0,0:10:13.58,0:10:17.06,Default,,0000,0000,0000,,Tôi đi tìm một chút. Mọi người đợi ở đây nhé.
Dialogue: 0,0:10:17.06,0:10:18.76,Default,,0000,0000,0000,,A, tớ cũng đi nữa.
Dialogue: 0,0:10:26.32,0:10:27.57,Default,,0000,0000,0000,,Không sao chứ?
Dialogue: 0,0:10:27.57,0:10:30.13,Default,,0000,0000,0000,,À, ừ... cám ơn nhé...
Dialogue: 0,0:10:30.13,0:10:33.02,Default,,0000,0000,0000,,Là tớ nói cám ơn mới phải.
Dialogue: 0,0:10:33.41,0:10:37.40,Default,,0000,0000,0000,,Cậu đã cất công chỉ cho tớ\N một nơi yên bình thế này mà.
Dialogue: 0,0:10:37.40,0:10:41.09,Default,,0000,0000,0000,,Đ-Đừng có ngốc... tớ đâu có...
Dialogue: 0,0:10:41.50,0:10:44.54,Default,,0000,0000,0000,,Tớ biết ơn lắm đó. Có cần tớ làm gì không?
Dialogue: 0,0:10:44.54,0:10:47.54,Default,,0000,0000,0000,,K-Không cần đâu mà...
Dialogue: 0,0:10:47.54,0:10:49.21,Default,,0000,0000,0000,,Cậu không cần biết ơn hay gì đâu...
Dialogue: 0,0:10:49.21,0:10:50.25,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:10:50.79,0:10:51.99,Default,,0000,0000,0000,,Không sao mà!
Dialogue: 0,0:10:52.87,0:10:54.75,Default,,0000,0000,0000,,B-Bởi vì tớ...
Dialogue: 0,0:10:55.26,0:10:58.42,Default,,0000,0000,0000,,chỉ làm những gì một người vợ nên làm thôi.
Dialogue: 0,0:10:59.99,0:11:01.88,Default,,0000,0000,0000,,N-Nè, Aikawa...
Dialogue: 0,0:11:02.54,0:11:05.32,Default,,0000,0000,0000,,Nếu cậu thật sự muốn báo đáp thì...
Dialogue: 0,0:11:06.09,0:11:09.20,Default,,0000,0000,0000,,c-cho tớ gọi cậu được không?
Dialogue: 0,0:11:09.91,0:11:11.20,Default,,0000,0000,0000,,Gọi cái gì cơ?
Dialogue: 0,0:11:11.20,0:11:12.44,Default,,0000,0000,0000,,Gọi như thế đó.
Dialogue: 0,0:11:12.83,0:11:15.06,Default,,0000,0000,0000,,"Như thế"? "Như thế" là thế nào?
Dialogue: 0,0:11:15.06,0:11:16.44,Default,,0000,0000,0000,,Thì là...
Dialogue: 0,0:11:16.44,0:11:17.44,Default,,0000,0000,0000,,Ưm... 
Dialogue: 0,0:11:17.44,0:11:19.62,Default,,0000,0000,0000,,Là...
Dialogue: 0,0:11:19.62,0:11:20.20,Default,,0000,0000,0000,,Là gì?
Dialogue: 0,0:11:20.56,0:11:22.91,Default,,0000,0000,0000,,L-Là gọi Aikawa bằng tên...
Dialogue: 0,0:11:23.60,0:11:26.08,Default,,0000,0000,0000,,gọi Aikawa bằng tên có được không?
Dialogue: 0,0:11:26.44,0:11:28.33,Default,,0000,0000,0000,,Hể? Tất nhiên là được.
Dialogue: 0,0:11:28.72,0:11:30.27,Default,,0000,0000,0000,,Được á?
Dialogue: 0,0:11:31.07,0:11:31.93,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:11:31.93,0:11:34.09,Default,,0000,0000,0000,,V-Vậy tớ gọi nhé!
Dialogue: 0,0:11:34.09,0:11:34.76,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:11:35.92,0:11:41.22,Default,,0000,0000,0000,,A-Ayu... Ayu-yu...
Dialogue: 0,0:11:41.22,0:11:42.69,Default,,0000,0000,0000,,Không phải...
Dialogue: 0,0:11:42.69,0:11:44.67,Default,,0000,0000,0000,,A-Ayu...
Dialogue: 0,0:11:44.67,0:11:45.60,Default,,0000,0000,0000,,Ayumu!{overlap with above}
Dialogue: 0,0:11:47.28,0:11:50.20,Default,,0000,0000,0000,,Be! Be! Be! Be!
Dialogue: 0,0:11:50.20,0:11:52.85,Default,,0000,0000,0000,,Boys, be ambitious!
Dialogue: 0,0:11:54.95,0:11:56.95,Default,,0000,0000,0090,,Đi dưới trời tối phải cẩn thận đó.
Dialogue: 0,0:11:58.48,0:12:01.80,Default,,0000,0000,0000,,{\pos(640,150)}No... No More Hentai!
Dialogue: 0,0:12:03.19,0:12:06.06,Default,,0000,0000,0000,,Be! Be! Be! Be!
Dialogue: 0,0:12:06.06,0:12:08.83,Default,,0000,0000,0000,,Boys, be ambitious!
Dialogue: 0,0:12:09.19,0:12:10.08,Default,,0000,0000,0000,,Haruna?
Dialogue: 0,0:12:13.36,0:12:14.58,Default,,0000,0000,0000,,Ong?!
Dialogue: 0,0:12:17.37,0:12:18.92,Default,,0000,0000,0000,,Ayumu, đợi đã!
Dialogue: 0,0:12:22.68,0:12:23.65,Default,,0000,0000,0000,,Ayumu!
Dialogue: 0,0:12:24.92,0:12:25.64,Default,,0000,0000,0000,,Haruna?
Dialogue: 0,0:12:26.25,0:12:28.20,Default,,0000,0000,0000,,Bà... đang ôm tôi ư...
Dialogue: 0,0:12:30.10,0:12:32.85,Default,,0000,0000,0000,,Tuyệt kĩ, Ayumu Barrier!
Dialogue: 0,0:12:32.85,0:12:35.85,Default,,0000,0000,0000,,{\fad(0,500)}Biết ngay mà!
Dialogue: 0,0:12:36.54,0:12:37.85,Default,,0000,0000,0000,,Aikawa!
Dialogue: 0,0:12:37.85,0:12:39.36,Default,,0000,0000,0000,,Zọt mau khi còn kịp!
Dialogue: 0,0:12:50.16,0:12:50.99,Default,,0000,0000,0000,,Aikawa!
Dialogue: 0,0:12:53.07,0:12:54.79,Default,,0000,0000,0000,,Một ngày đi vào rừng....
Dialogue: 0,0:12:54.79,0:12:58.13,Default,,0000,0000,0000,,em gặp một anh gấu.
Dialogue: 0,0:12:59.54,0:13:01.63,Default,,0000,0000,0000,,C-Chạy mau...
Dialogue: 0,0:13:03.55,0:13:05.25,Default,,0000,0000,0000,,Gấu, gấu, gấu, gấu!
Dialogue: 0,0:13:05.25,0:13:06.80,Default,,0000,0000,0000,,Nè, tôi chả thấy gì hết!
Dialogue: 0,0:13:06.80,0:13:08.66,Default,,0000,0000,0000,,Gấu đang đuổi theo kìa!
Dialogue: 0,0:13:08.66,0:13:11.14,Default,,0000,0000,0000,,Bỏ tay ra! Chả thấy gì hết!
Dialogue: 0,0:13:14.37,0:13:15.96,Default,,0000,0000,0000,,Ui da...
Dialogue: 0,0:13:20.17,0:13:21.30,Default,,0000,0000,0000,,Ayumu...
Dialogue: 0,0:13:21.30,0:13:25.90,Default,,0000,0000,0000,,Tình huống này thì chắc không còn gì \Nđể giải thích đâu nhỉ?
Dialogue: 0,0:13:26.25,0:13:29.32,Default,,0000,0000,0000,,T-Thật ra là tôi muốn giải thích lắm...
Dialogue: 0,0:13:29.32,0:13:30.12,Default,,0000,0000,0000,,Số là...
Dialogue: 0,0:13:30.57,0:13:33.36,Default,,0000,0000,0000,,Ít ra cũng phải nghe đã chứ!
Dialogue: 0,0:13:34.05,0:13:39.17,Default,,0000,0000,0000,,Ui, ấm quá chừng~!
Dialogue: 0,0:13:40.24,0:13:42.07,Default,,0000,0000,0000,,Bà làm cái gì thế?
Dialogue: 0,0:13:42.61,0:13:45.92,Default,,0000,0000,0000,,Không như Ayumu, thú vật yêu tôi lắm nhé.
Dialogue: 0,0:13:46.61,0:13:50.16,Default,,0000,0000,0000,,Đừng có vội nói thế. Bị ăn thịt lúc nào \N tôi không biết đâu nhé.
Dialogue: 0,0:13:50.16,0:13:51.97,Default,,0000,0000,0000,,Ghen tị kìa! Ghen tị kìa!
Dialogue: 0,0:13:51.97,0:13:53.43,Default,,0000,0000,0000,,Là tôi lo cho bà chứ bộ.
Dialogue: 0,0:13:53.90,0:13:56.18,Default,,0000,0000,0000,,Ghen tị vì không được ai yêu chăng?
Dialogue: 0,0:13:56.18,0:13:57.94,Necro Notebook,,0000,0000,0000,,{\blur0.5}Chịu khó thôi
Dialogue: 0,0:13:57.94,0:13:59.72,Default,,0000,0000,0000,,Sao lại thành thế chứ?!
Dialogue: 0,0:14:01.70,0:14:02.93,Default,,0000,0000,0000,,Thích thật...
Dialogue: 0,0:14:04.19,0:14:08.86,Default,,0000,0000,0000,,Cả 3 người lúc nào cũng ở bên Ayumu, \N vui biết nhường nào...
Dialogue: 0,0:14:10.29,0:14:11.95,Default,,0000,0000,0000,,Đừng có hiểu lầm nhé!
Dialogue: 0,0:14:13.24,0:14:17.36,Default,,0000,0000,0000,,Nói nghe như tôi yêu Ayumu vậy á.
Dialogue: 0,0:14:17.36,0:14:19.96,Default,,0000,0000,0000,,Ưm. Như vậy thì chẳng đúng chút nào.
Dialogue: 0,0:14:20.24,0:14:23.59,Default,,0000,0000,0000,,Thì vì... mọi người đi theo vì Ayumu mà...
Dialogue: 0,0:14:24.19,0:14:26.67,Default,,0000,0000,0000,,Yukinori có ghét tôi không?
Dialogue: 0,0:14:27.94,0:14:29.97,Default,,0000,0000,0000,,Tôi không có...
Dialogue: 0,0:14:30.38,0:14:33.47,Default,,0000,0000,0000,,Tôi đến đây là muốn cùng đi chơi với Yukinori đó!
Dialogue: 0,0:14:33.82,0:14:34.97,Default,,0000,0000,0000,,Tôi cũng vậy.
Dialogue: 0,0:14:35.35,0:14:37.98,Necro Notebook,,0000,0000,0000,,{\blur0.5}Mọi người cùng đi sẽ vui hơn.
Dialogue: 0,0:14:45.76,0:14:48.27,Default,,0000,0000,0000,,Phải rồi ha... xin lỗi.
Dialogue: 0,0:14:48.27,0:14:50.03,Default,,0000,0000,0000,,Tớ thật ngốc.
Dialogue: 0,0:14:50.03,0:14:52.95,Default,,0000,0000,0000,,{\fad(0,500)}đúng là cùng mọi người ngắm sao...
Dialogue: 0,0:14:53.78,0:14:56.13,Default,,0000,0000,0000,,sẽ vui hơn nhiều nhỉ.
Dialogue: 0,0:14:56.13,0:14:58.00,Default,,0000,0000,0000,,{song}
Dialogue: 0,0:15:21.37,0:15:23.02,Default,,0000,0000,0000,,Đến rồi! Chính là chỗ này!
Dialogue: 0,0:15:23.42,0:15:25.27,Default,,0000,0000,0000,,Cuối cùng cũng lên đến đỉnh rồi...
Dialogue: 0,0:15:25.27,0:15:28.40,Default,,0000,0000,0000,,L-Lần đầu leo núi sao mà mệt quá chừng...
Dialogue: 0,0:15:47.45,0:15:49.05,Default,,0000,0000,0000,,Đẹp quá...
Dialogue: 0,0:15:53.43,0:15:58.31,Necro Notebook,,0000,0000,0010,,{\an8\blur0.5}Vẻ đẹp của sao trời vẫn không thay đổi
Dialogue: 0,0:15:55.02,0:15:58.31,Default,,0000,0000,0000,,Vẻ đẹp của sao trời vẫn không thay đổi
Dialogue: 0,0:15:59.95,0:16:03.68,Default,,0000,0000,0000,,Nhưng những vì sao đã thay đổi cũng rất đẹp.
Dialogue: 0,0:16:06.64,0:16:10.87,Default,,0000,0000,0000,,Đây là điều tớ muốn cho Ayumu xem.
Dialogue: 0,0:16:13.16,0:16:15.32,Default,,0000,0000,0000,,T-Thật đẹp, phải không?
Dialogue: 0,0:16:15.62,0:16:19.33,Default,,0000,0000,0000,,Ừ. Nó đã tiếp sức cho tớ nhiều lắm.
Dialogue: 0,0:16:19.76,0:16:21.72,Default,,0000,0000,0000,,T-Thế thì tốt rồi.
Dialogue: 0,0:16:22.48,0:16:23.83,Default,,0000,0000,0000,,Cám ơn nhé.
Dialogue: 0,0:16:23.83,0:16:26.46,Default,,0000,0000,0000,,Đ-Đã bảo là không cần nói thế mà.
Dialogue: 0,0:16:27.43,0:16:28.21,Default,,0000,0000,0000,,Yuki.
Dialogue: 0,0:16:32.28,0:16:36.47,Default,,0000,0000,0000,,Năm sau nhất định lại lên đây nữa nhé, Ayumu!
Dialogue: 0,0:16:45.98,0:16:47.68,Default,,0000,0000,0000,,Ngon quá!
Dialogue: 0,0:16:47.68,0:16:49.52,Default,,0000,0000,0000,,Đúng là ngon thật đấy!
Dialogue: 0,0:16:49.52,0:16:52.36,Default,,0000,0000,0000,,Maelstrom, háu ăn quá đấy.
Dialogue: 0,0:16:52.87,0:16:57.47,Default,,0000,0000,0000,,Là chuyên gia số zách về trứng chiên học mà.
Dialogue: 0,0:16:57.47,0:17:01.33,Default,,0000,0000,0000,,Cứ giao việc nấu ăn cho đầu bếp thiên tài Haruna đi nhé!
Dialogue: 0,0:17:01.62,0:17:03.50,Necro Notebook,,0000,0000,0000,,{\an1\note}3 sao.
Dialogue: 0,0:17:02.06,0:17:04.51,Default,,0000,0000,0000,,Nè, bái làm "sư phụ" được không?
Dialogue: 0,0:17:04.51,0:17:06.13,Default,,0000,0000,0000,,Cứ tự nhiên nhé!
Dialogue: 0,0:17:07.22,0:17:10.65,Default,,0000,0000,0000,,Đã đến lúc quên đi con người yếu đuối hôm qua rồi.
Dialogue: 0,0:17:11.34,0:17:13.94,Default,,0000,0000,0000,,Tạm biệt, con người hôm qua của tôi.
Dialogue: 0,0:17:15.08,0:17:17.76,Default,,0000,0000,0000,,Xin chào, con người mới của tôi.
Dialogue: 0,0:17:26.79,0:17:30.02,Default,,0000,0000,0000,,Chữ ký của bạn Aikawa... tuyệt quá!
Dialogue: 0,0:17:30.02,0:17:32.98,Default,,0000,0000,0000,,Giờ thì tạm biệt, con người mới của tôi.
Dialogue: 0,0:17:34.29,0:17:37.41,Default,,0000,0000,0000,,Đông ghê. Aikawa-kun hay thiệt đó.
Dialogue: 0,0:17:37.80,0:17:40.83,Default,,0000,0000,0000,,Không không. Mấy đứa này hơi bị kỳ quặc thôi.
Dialogue: 0,0:17:40.83,0:17:41.66,Default,,0000,0000,0000,,Nhờ cậu.
Dialogue: 2,0:17:42.97,0:17:45.59,Default,,0000,0000,0000,,Việc này còn kéo dài đến bao giờ chứ...
Dialogue: 0,0:17:49.91,0:17:53.26,Default,,0000,0000,0000,,Cuộc sống bình yên thường ngày của mình\N đâu mất rồi...
Dialogue: 0,0:17:54.10,0:17:55.74,Default,,0000,0000,0000,,Aikawa Ayumu.
Dialogue: 0,0:17:55.74,0:17:56.55,Default,,0000,0000,0000,,Sao?
Dialogue: 0,0:18:02.23,0:18:03.55,Default,,0000,0000,0000,,Rồi, rồi.
Dialogue: 0,0:18:06.81,0:18:07.94,Default,,0000,0000,0000,,Ngu ngốc!
Dialogue: 0,0:18:09.21,0:18:11.38,Default,,0000,0000,0000,,Ta có điều muốn nói với ngươi.
Dialogue: 0,0:18:11.38,0:18:13.13,Default,,0000,0000,0000,,Hãy nhúng nó vào nước.
