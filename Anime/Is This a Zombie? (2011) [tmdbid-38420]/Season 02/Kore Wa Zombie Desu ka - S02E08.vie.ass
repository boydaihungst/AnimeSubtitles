Dialogue: 0,0:10:45.37,0:10:50.29,Default,,0000,0000,180,,{\fs75\an1\bord0\c&H000000&}Nội quy: Phải được sự cho phép của thầy cô \Ntrước khi trò chuyện với bạn khác giới
Dialogue: 0,0:10:46.10,0:10:49.80,Default,,0000,0000,158,,{\an8}Yamada! Hanako! Không được nói chuyện trong trường!
Dialogue: 0,0:10:52.51,0:10:53.75,Default,,0000,0000,0000,,Saras!
Dialogue: 0,0:10:55.72,0:10:57.84,Default,,0000,0000,30,,Tớ được cho một tấm vé nè.
Dialogue: 0,0:10:58.62,0:11:00.16,Default,,0000,0000,30,,Hội kết giao à?
Dialogue: 0,0:11:00.16,0:11:01.44,Default,,0000,0000,30,,Thật ngớ ngẩn.
Dialogue: 0,0:11:01.44,0:11:04.22,Default,,0000,0000,30,,Tôi đang chuẩn bị cho buổi Live tiếp theo nên bận lắm.
Dialogue: 0,0:11:04.74,0:11:06.67,Default,,0000,0000,30,,Hể, vậy là không đi à?
Dialogue: 0,0:11:06.67,0:11:08.93,Default,,0000,0000,30,,Aikawa đứng ra tổ chức mà...
Dialogue: 0,0:11:08.93,0:11:11.44,Default,,0000,0000,30,,Cái gì? Aikawa Ayumu?
Dialogue: 0,0:11:11.82,0:11:12.51,Default,,0000,0000,30,,Đúng rồi.
Dialogue: 0,0:11:13.40,0:11:14.44,Default,,0000,0000,30,,Ông xã chết tiệt...
Dialogue: 0,0:11:15.18,0:11:17.22,Default,,0000,0000,30,,{\i1}Thiệt tình, đúng là một cái mông hám dục.
Dialogue: 0,0:11:18.00,0:11:21.14,Default,,0000,0000,0000,,Mà nếu không có chuyện gì lớn\N thì tôi cũng chả hứng thú.
Dialogue: 0,0:11:21.55,0:11:22.70,Default,,0000,0000,0000,,Thế á?
Dialogue: 0,0:11:23.06,0:11:25.33,Default,,0000,0000,0000,,Mặc kệ đi. Cô muốn đi thì cứ việc.
Dialogue: 0,0:11:25.33,0:11:26.74,Default,,0000,0000,0000,,Hoan hô!
Dialogue: 0,0:11:27.30,0:11:29.08,Default,,0000,0000,0000,,Cơ mà... kết giao là sao nhỉ?
Dialogue: 0,0:11:29.46,0:11:30.76,Default,,0000,0000,0000,,Là giữa con trai với con gái.
Dialogue: 0,0:11:31.94,0:11:33.08,Default,,0000,0000,0000,,Giao mông đó.
Dialogue: 0,0:11:36.96,0:11:37.92,Default,,0000,0000,0000,,Con trai...
Dialogue: 0,0:11:37.92,0:11:38.96,Default,,0000,0000,0000,,Con gái...
Dialogue: 0,0:11:38.96,0:11:40.84,Default,,0000,0000,0000,,Mỗi bên đều khao khát hơi ấm của nhau.
Dialogue: 0,0:11:41.50,0:11:44.42,Default,,0000,0000,0000,,Hội kết giao là một hệ thống của Đất mẹ.
Dialogue: 0,0:11:44.42,0:11:45.85,Default,,0000,0000,0000,,Một thế lực thiên nhiên.
Dialogue: 0,0:11:46.34,0:11:48.85,Default,,0000,0000,0000,,Và cuối cùng, cái ngày định mệnh ấy đã đến.
Dialogue: 0,0:11:49.63,0:11:51.94,Default,,0000,0000,0000,,Người tổ chức Aikawa Ayumu đây.
Dialogue: 0,0:11:51.94,0:11:54.42,Default,,0000,0000,0000,,Hôm nay cùng vui vẻ với nhau nhé!
Dialogue: 0,0:11:57.67,0:12:00.06,Default,,0000,0000,0000,,Nhìn thấy núm vú kìa!
Dialogue: 0,0:12:00.06,0:12:02.36,Default,,0000,0000,0000,,Tuy không hiểu lắm, nhưng ngầu đấy, Aikawa!
Dialogue: 0,0:12:02.36,0:12:04.45,Default,,0000,0000,0000,,Hể? Tôi tưởng giờ đang là mốt chứ?
Dialogue: 0,0:12:04.45,0:12:06.19,Default,,0000,0000,0000,,Nhìn thấy hết kìa!
Dialogue: 0,0:12:06.19,0:12:07.39,Default,,0000,0000,0000,,Cool đấy nhỉ.
Dialogue: 0,0:12:07.39,0:12:10.37,Default,,0000,0000,0000,,Trên web nói đây là kiểu cực kỳ gợi cảm mà!
Dialogue: 0,0:12:10.37,0:12:12.46,Default,,0000,0000,0000,,Mọi người, tôi đã đến đây!
Dialogue: 0,0:12:13.27,0:12:14.55,Default,,0000,0000,0000,,Cùng một kiểu luôn?!
Dialogue: 0,0:12:15.58,0:12:17.48,Default,,0000,0000,0000,,Nhìn thấy núm vú kìa!
Dialogue: 0,0:12:17.48,0:12:19.08,Default,,0000,0000,0000,,Vậy là vào cùng một trang rồi.
Dialogue: 0,0:12:19.08,0:12:21.21,Default,,0000,0000,0000,,Trời ơi... đây là sai lầm của mình ư...
Dialogue: 0,0:12:21.72,0:12:23.28,Default,,0000,0000,0000,,Các ngôi sao đã đến.
Dialogue: 0,0:12:23.72,0:12:27.20,Default,,0000,0000,0000,,Đã là liên hoan thì phải có Ma trang thiếu nữ mới được nhé!
Dialogue: 0,0:12:23.88,0:12:30.52,Necro Notebook,,0000,1200,0000,,{\fad(500,0)\pos(429,939)}Party
Dialogue: 0,0:12:27.20,0:12:30.52,Default,,0000,0000,0000,,Hai người họ cứ nhất quyết đòi đến\N nên tôi theo hộ tống.
Dialogue: 0,0:12:30.52,0:12:32.39,Default,,0000,0000,0000,,Tai họa xuất hiện rồi!
Dialogue: 0,0:12:32.39,0:12:35.04,Default,,0000,0000,0000,,Hôm nay dễ thương thế!
Dialogue: 0,0:12:35.04,0:12:36.23,Default,,0000,0000,0000,,Xin lỗi...
Dialogue: 0,0:12:37.48,0:12:39.23,Default,,0000,0000,0000,,Em đến trễ ạ.
Dialogue: 0,0:12:40.26,0:12:41.49,Default,,0000,0000,0000,,Dễ thương quá...
Dialogue: 0,0:12:41.80,0:12:43.26,Default,,0000,0000,0000,,Hân hạnh làm quen.
Dialogue: 0,0:12:43.26,0:12:45.22,Default,,0000,0000,0000,,Em là Kyouko.
Dialogue: 0,0:12:45.22,0:12:48.99,Default,,0000,0000,0000,,Em đã nhờ Aikawa-senpai tổ chức buổi họp này.
Dialogue: 0,0:12:52.08,0:12:53.87,Default,,0000,0000,0000,,Tình yêu sét đánh rồi!
Dialogue: 0,0:12:54.99,0:12:58.25,Default,,0000,0000,0000,,{\i1}Mới hồi trước ông còn coi nó là em gái đấy.{\i0}
Dialogue: 0,0:12:59.27,0:13:02.64,Default,,0000,0000,0000,,{\i1}Kyouko như là em gái của tôi vậy.
Dialogue: 0,0:13:03.20,0:13:06.13,Default,,0000,0000,0000,,{\i1}Ông mà dám làm gì bậy bạ là tôi không tha đâu.
Dialogue: 0,0:13:06.48,0:13:08.94,Default,,0000,0000,0000,,Làm vợ anh đi!
Dialogue: 0,0:13:11.91,0:13:15.52,Default,,0000,0000,0000,,Nào, mọi người! Hôm nay chơi cho hết mình nhé!
Dialogue: 0,0:13:18.43,0:13:20.83,Default,,0000,0000,0000,,{\i1}Nhìn người khác mới thấy đúng là ngượng thật.{\i0}
Dialogue: 0,0:13:20.83,0:13:23.58,Default,,0000,0000,0000,,Ơ, nhưng mà nữ nhiều hơn nam thì hơi kì nhỉ?
Dialogue: 0,0:13:24.07,0:13:27.03,Default,,0000,0000,0000,,Hội kết giao thì con trai và con gái\N phải bằng nhau sao?
Dialogue: 0,0:13:27.48,0:13:29.56,Default,,0000,0000,0000,,Thì đúng là thế mà.
Dialogue: 0,0:13:30.87,0:13:32.42,Default,,0000,0000,0000,,Không đủ con trai rồi.
Dialogue: 0,0:13:32.42,0:13:33.29,Default,,0000,0000,0000,,Tính sao đây?
Dialogue: 0,0:13:33.86,0:13:34.83,Default,,0000,0000,0000,,Hey!
Dialogue: 0,0:13:36.20,0:13:37.79,Default,,0000,0000,0000,,Đừng lo, boy.
Dialogue: 0,0:13:38.11,0:13:41.29,Default,,0000,0000,0000,,Bọn ta sẽ làm bạn với chú, boy.
Dialogue: 0,0:13:42.46,0:13:44.09,Default,,0000,0000,0000,,Đúng là cứu tinh!
Dialogue: 0,0:13:45.14,0:13:45.80,Default,,0000,0000,0000,,Bạn á?
Dialogue: 0,0:13:46.13,0:13:47.55,Necro Notebook,,0000,600,0000,,Vớ được bạn!
