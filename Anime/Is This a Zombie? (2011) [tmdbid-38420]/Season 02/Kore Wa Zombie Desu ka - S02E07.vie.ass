Dialogue: 1,0:00:37.80,0:00:42.06,Default,,0000,0000,0000,,{\blur0.8\bord0\fscx84\fscy78\fs100\c&H060301&\frz0.9894\pos(486,618)}Bí ẩn của vũ trụ
Dialogue: 0,0:00:38.72,0:00:42.06,HarunaMuted,,0000,0000,0000,,Ăn -> Phục hồi ma lực = Sai!
Dialogue: 0,0:00:43.64,0:00:48.40,HarunaMuted,,0000,0000,0000,,Ma lực của Necromancer <- Hấp thụ = Haruna-chan tái sinh!
Dialogue: 0,0:00:49.10,0:00:54.07,Default,,0000,0000,0000,,Haruna đã dùng thiết bị hấp thụ ma lực \N để hút ma lực của em.
Dialogue: 0,0:00:56.12,0:00:57.93,Default,,0000,0000,0000,,{\i1}Hãy đỡ! Hấp thụ ma lực!
Dialogue: 0,0:00:58.88,0:01:07.08,Default,,0000,0000,0000,,Nhưng đổi lại, Haruna sẽ giống như em, bị đau đớn \N mỗi khi nói chuyện hoặc biểu hiện cảm xúc.
Dialogue: 0,0:01:07.08,0:01:07.92,Default,,0000,0000,0000,,Hiểu chưa hả?!
Dialogue: 0,0:01:09.88,0:01:10.91,Default,,0000,0000,0000,,{op}
Dialogue: 0,0:02:43.36,0:02:46.61,Default,,0000,0000,0000,,{\fs40}Ngay cả lớp áo ngoài cũng được chính Đất mẹ lựa chọn
Dialogue: 0,0:02:46.61,0:02:49.83,Default,,0000,0000,0000,,{\fs40}Các chiến binh trái đất sẽ được các tinh linh bảo vệ
Dialogue: 0,0:02:49.83,0:02:52.60,Default,,0000,0000,0000,,{\fs40}Hỡi thế giới, hãy mở to mắt ra mà xem
Dialogue: 2,0:02:52.19,0:02:57.95,Tittle Start,,0000,0000,0000,,{\be1}{\fad(800,0)\blur0.5}[ Vâng, Sensei là mạnh nhất ]
Dialogue: 0,0:02:52.60,0:02:55.12,Default,,0000,0000,0000,,{\fs40}Hãy cứ giơ nanh vuốt ra đây
Dialogue: 0,0:03:00.11,0:03:05.06,Default,,0000,0000,0020,,Mang bộ giáp và mũ trụ đó vào, ma lực sẽ tạm thời được kiểm soát.
Dialogue: 0,0:03:05.49,0:03:06.61,Necro Notebook,,0000,0600,0020,,{Haruna} Chán thế
Dialogue: 0,0:03:06.61,0:03:11.83,Default,,0000,0000,0020,,Vậy ra Haruna đến trường Ayumu chỉ là để chế tạo bộ hấp thụ à?
Dialogue: 0,0:03:12.04,0:03:14.42,Necro Notebook,,0000,0000,0020,,{Haruna}Có nhiều công cụ cần thiết mà!
Dialogue: 0,0:03:14.42,0:03:16.46,Necro Notebook,,0000,0000,0020,,Cả một chuyên gia ma thuật nữa!
Dialogue: 0,0:03:16.46,0:03:17.88,Default,,0000,0000,0020,,Chuyên gia ma thuật?
Dialogue: 0,0:03:18.57,0:03:19.92,Default,,0000,0000,0020,,Em không biết.
Dialogue: 0,0:03:20.52,0:03:21.26,Default,,0000,0000,0000,,Là ai thế?
Dialogue: 0,0:03:21.51,0:03:22.76,Necro Notebook,,0000,0000,0000,,Một người tốt
Dialogue: 0,0:03:23.10,0:03:26.02,Default,,0000,0000,0000,,Ma trang thiếu nữ đúng là trả lời "dễ hiểu" ghê.
Dialogue: 0,0:03:26.02,0:03:27.60,Default,,0000,0000,0000,,Sắp đến giờ rồi đấy.
Dialogue: 0,0:03:27.60,0:03:28.89,Default,,0000,0000,0000,,À, ừ nhỉ...
Dialogue: 0,0:03:29.44,0:03:30.64,Default,,0000,0000,0000,,Anh đi nhé.
Dialogue: 0,0:03:30.64,0:03:32.90,Default,,0000,0000,0000,,À... ừ.
Dialogue: 0,0:03:36.90,0:03:39.19,Default,,0000,0000,0000,,Ngày đầu tiên đã thành công vang dội!
Dialogue: 0,0:03:39.53,0:03:42.28,Default,,0000,0000,0000,,Hôm nay tiếp tục cố gắng nào!
Dialogue: 0,0:03:45.81,0:03:47.02,Default,,0000,0000,0000,,Aikawa!
Dialogue: 0,0:03:49.34,0:03:51.66,Default,,0000,0000,0000,,Ơ, hôm nay cậu không cosplay nữa à?
Dialogue: 0,0:03:52.05,0:03:54.20,Default,,0000,0000,0000,,Hôm nay làm việc hậu trường thôi.
Dialogue: 0,0:03:54.20,0:03:55.92,Default,,0000,0000,0000,,Cậu cũng không mặc áo tắm nữa hả?
Dialogue: 0,0:03:56.39,0:03:58.48,Default,,0000,0000,0000,,C-Cái đó là riêng hôm qua thôi.
Dialogue: 0,0:03:58.48,0:04:00.31,Default,,0000,0000,0000,,Thế à, tiếc nhỉ.
Dialogue: 0,0:04:00.31,0:04:01.54,Default,,0000,0000,0000,,Dễ thương thế mà.
Dialogue: 0,0:04:02.35,0:04:04.32,Default,,0000,0000,0000,,V-Vậy... lần sau...
Dialogue: 0,0:04:04.32,0:04:05.80,Default,,0000,0000,0000,,Khi mà chỉ có hai đứa mình...
Dialogue: 0,0:04:06.27,0:04:08.13,Default,,0000,0000,0000,,Hở? Vừa nói gì cơ?
Dialogue: 0,0:04:08.13,0:04:09.43,Default,,0000,0000,0000,,Ngốc!
Dialogue: 0,0:04:09.43,0:04:11.84,Default,,0000,0000,0000,,Xấu hổ lắm, đừng bắt người ta nói ra chứ!
Dialogue: 0,0:04:11.84,0:04:13.37,Default,,0000,0000,0000,,Ơ... cái nhẫn đó...
Dialogue: 0,0:04:14.53,0:04:15.77,Default,,0000,0000,0000,,Cũng chịu đeo thật đấy à.
Dialogue: 0,0:04:16.23,0:04:17.46,Default,,0000,0000,0000,,T-Tất nhiên!
Dialogue: 0,0:04:17.46,0:04:21.32,Default,,0000,0000,0000,,Aikawa đã tặng cho tớ mà. Nghĩa vụ của người vợ\N là phải luôn đeo chứ.
Dialogue: 0,0:04:21.76,0:04:23.47,Default,,0000,0000,0000,,Gì mà đến mức...
Dialogue: 0,0:04:23.92,0:04:24.73,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:04:26.40,0:04:28.08,Default,,0000,0000,0000,,tớ vui lắm ấy.
Dialogue: 0,0:04:29.39,0:04:31.08,Default,,0000,0000,0000,,Tomonori, cậu...
Dialogue: 0,0:04:33.83,0:04:36.51,Default,,0000,0000,0000,,{\i1}Không thể nói cái nhẫn đó là...
Dialogue: 0,0:04:36.51,0:04:40.62,Default,,0000,0000,0000,,{\i1}vật kiểm soát sức mạnh \N mà một lão suốt ngày ói máu tự dưng đưa cho mình được nhỉ...
Dialogue: 0,0:04:40.62,0:04:41.96,Default,,0000,0000,0000,,Yuki-chan!
Dialogue: 0,0:04:42.55,0:04:44.15,Default,,0000,0000,0000,,Phụ một tay đi.
Dialogue: 0,0:04:44.15,0:04:45.57,Default,,0000,0000,0000,,Tớ phải đi rồi.
Dialogue: 0,0:04:46.09,0:04:47.75,Default,,0000,0000,0000,,Gặp cậu sau nhé.
Dialogue: 0,0:04:50.30,0:04:51.04,Default,,0000,0000,0000,,Ayumu.
Dialogue: 0,0:04:52.08,0:04:54.02,Default,,0000,0000,0000,,Anh tặng nhẫn cho người ta à?
Dialogue: 0,0:04:54.02,0:04:55.23,Necro Notebook,,0000,0800,0000,,Màu mè gớm.
Dialogue: 0,0:04:55.57,0:04:57.15,Default,,0000,0000,0000,,K-Không phải!
Dialogue: 0,0:04:57.15,0:04:59.89,Default,,0000,0000,0000,,Cãi nhẫn đó\N không phải một cái nhẫn bình thường đâu nhé.
Dialogue: 0,0:04:59.89,0:05:02.36,Default,,0000,0000,0000,,Ưm, nói chung thì... là một cái nhẫn rất đặc biệt.
Dialogue: 0,0:05:02.76,0:05:04.72,Default,,0000,0000,0000,,Một cái nhẫn rất đặc biệt à?
Dialogue: 0,0:05:05.90,0:05:08.13,Default,,0000,0000,0000,,Không phải... Không phải...
Dialogue: 0,0:05:11.47,0:05:14.71,Default,,0000,0000,0000,,Ayumu, hôm nay anh không ảo tưởng về em à?
Dialogue: 0,0:05:16.61,0:05:19.04,Default,,0000,0000,0000,,S-Sao tự dưng...
Dialogue: 0,0:05:19.58,0:05:20.55,Default,,0000,0000,0000,,Anh vẫn thường làm mà.
Dialogue: 0,0:05:23.97,0:05:26.40,Default,,0000,0000,0000,,V-Vậy... anh xin phép.
Dialogue: 0,0:05:29.35,0:05:38.86,imajinary skrolling tekst,,0000,0000,0000,,{\q2\blur0.5\move(2120,590,-800,590)}{\q2\blur0.5\move(2110,590,-822,590)}Đây là ảo tưởng của chàng nhân vật chính yếu sinh lý Aikawa Ayumu. (CV {\c&HEF83F6&}* {\r\blur0.5}Người thật)
Dialogue: 0,0:05:30.07,0:05:34.18,Default,,0000,0000,0020,,Aikawa-senpai, cùng em đi chơi hội văn hóa nha?
Dialogue: 0,0:05:35.20,0:05:38.94,Default,,0000,0000,0020,,Vui quá! Em và Senpai thật hợp đôi.
Dialogue: 0,0:05:39.64,0:05:46.71,Default,,0000,0000,0000,,Có một lời đồn rằng... vào lễ hội văn hóa, nếu một đôi hôn nhau\N dưới tán cây huyền thoại này thì họ sẽ mãi mãi bên nhau.
Dialogue: 0,0:05:46.72,0:05:48.56,Default,,0000,0000,0000,,Senpai có tin không?
Dialogue: 0,0:05:49.03,0:05:49.92,Default,,0000,0000,0000,,Em...
Dialogue: 0,0:05:57.49,0:05:58.46,Default,,0000,0000,0000,,Làm cái gì thế hả?
Dialogue: 0,0:05:58.94,0:06:00.96,Necro Notebook,,0000,0000,0000,,Ảo tưởng về tôi nữa
Dialogue: 0,0:06:03.04,0:06:05.68,Default,,0000,0000,0000,,Nhưng nếu dám nghĩ gì tầm bậy...
Dialogue: 1,0:06:05.68,0:06:09.93,Default,,0000,0000,0000,,Tôi sẽ trói ông vào khoan tên lửa rồi phóng vào lỗ đen Mohorovivic...
Dialogue: 0,0:06:10.80,0:06:11.79,Default,,0000,0000,0000,,hay còn gọi là Hậu môn đấy.
Dialogue: 0,0:06:14.60,0:06:16.93,Necro Notebook,,0000,0000,0000,,Khẩn trương ảo tưởng về tôi đi.
Dialogue: 0,0:06:17.73,0:06:20.10,Default,,0000,0000,0000,,V-V-Vậy... thử lại lần nữa.
Dialogue: 0,0:06:22.94,0:06:32.16,imajinary skrolling tekst,,0000,0000,0000,,{\q2\blur0.5\move(2120,590,-800,590)}{\q2\blur0.5\move(2110,590,-822,590)}Đây là ảo tưởng của chàng nhân vật chính yếu sinh lý Aikawa Ayumu. (CV {\c&HEF83F6&}* {\r\blur0.5}Người thật)
Dialogue: 0,0:06:23.23,0:06:27.36,Default,,0000,0000,0020,,Aikawa-senpai, cùng em đi chơi hội văn hóa nha?
Dialogue: 0,0:06:28.60,0:06:32.24,Default,,0000,0000,0020,,Tuyệt quá! Hôm nay trúng lớn trên sàn chứng khoán rồi.
Dialogue: 0,0:06:34.68,0:06:37.44,Default,,0000,0000,0000,,Nào, nôn tiền ra, cái cây kia!
Dialogue: 0,0:06:37.44,0:06:40.77,Default,,0000,0000,0000,,Ta ngửi thấy rồi nhé, gỗ cây này sẽ được khối tiền đây!
Dialogue: 0,0:06:45.23,0:06:46.37,Default,,0000,0000,0000,,Chịu rồi...
Dialogue: 0,0:06:46.37,0:06:47.56,Default,,0000,0000,0000,,Cái gì chứ?!
Dialogue: 0,0:06:56.14,0:06:58.14,Necro Notebook,,0000,0000,0000,,Tại cơn nhức đầu!
Dialogue: 0,0:06:58.14,0:07:00.60,Default,,0000,0000,0000,,Này này, ổn không đấy?
Dialogue: 0,0:07:01.78,0:07:04.11,Default,,0000,0000,0000,,Tụi em đang định đi xem các quầy hàng.
Dialogue: 0,0:07:04.11,0:07:05.19,Default,,0000,0000,0000,,Thế à.
Dialogue: 0,0:07:05.19,0:07:06.98,Default,,0000,0000,0000,,Vậy em lo cho Haruna nhé.
Dialogue: 0,0:07:07.36,0:07:10.45,Default,,0000,0000,0000,,Đừng lo. Em sẽ để ý mà.
Dialogue: 0,0:07:10.45,0:07:13.03,Necro Notebook,,0000,0000,0000,,Đúng ra tôi mới là chị chứ!
Dialogue: 0,0:07:15.53,0:07:17.54,Default,,0000,0000,0000,,Vâng, 5 bạn, xin mời.
Dialogue: 0,0:07:18.16,0:07:19.50,Default,,0000,0000,0000,,Chúc các bạn ngon miệng.
Dialogue: 0,0:07:19.91,0:07:21.21,Default,,0000,0000,0000,,Cám ơn các bạn.
Dialogue: 0,0:07:40.00,0:07:42.22,Default,,0000,0000,0000,,Haruna, ăn bánh crepe không?
Dialogue: 0,0:07:43.82,0:07:45.73,Default,,0000,0000,0000,,Thích loại nào?
Dialogue: 1,0:07:45.73,0:07:47.53,Default,,0000,0000,0000,,{\bord1\c&H618DC9&\pos(232,700)}Kimchi Natto {\c&H807C75&}Crepe
Dialogue: 1,0:07:45.73,0:07:47.53,Default,,0000,0000,0000,,{\bord1\c&H807C75&\pos(380,650)}Sô-cô-la Chuối Crepe
Dialogue: 1,0:07:45.73,0:07:47.53,Default,,0000,0000,0000,,{\bord1\pos(496,600)\c&H8173C9&}Dâu đậu đỏ {\c&H807C75&}Crepe
Dialogue: 0,0:07:47.96,0:07:49.29,Default,,0000,0000,0000,,Cái đó chứ gì?
Dialogue: 0,0:07:51.37,0:07:52.03,Default,,0000,0000,0000,,Xin lỗi...
Dialogue: 0,0:07:52.59,0:07:54.00,Default,,0000,0000,0000,,Chào mừng quý khách.
Dialogue: 0,0:07:54.94,0:07:56.74,Default,,0000,0000,0000,,Cho mình một crepe dâu đậu đỏ.
Dialogue: 0,0:08:02.18,0:08:05.17,Default,,0000,0000,0000,,Và một crepe sô-cô-la chuối nữa.
Dialogue: 0,0:08:05.42,0:08:07.67,Necro Notebook,,0000,0000,0000,,Necromancer quá đáng.
Dialogue: 0,0:08:09.91,0:08:12.77,Default,,0000,0000,0000,,Cám ơn sự cổ vũ, lũ cặn bã.
Dialogue: 0,0:08:20.30,0:08:21.18,Default,,0000,0000,0000,,Nhận ra chứ?
Dialogue: 0,0:08:21.89,0:08:22.50,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:08:23.00,0:08:25.06,Default,,0000,0000,0000,,Chắc chắn rằng nó đang ở đây.
Dialogue: 0,0:08:26.08,0:08:27.33,Default,,0000,0000,0000,,Đừng lơ là đấy.
Dialogue: 0,0:08:27.99,0:08:29.33,Default,,0000,0000,0000,,Tôi hiểu.
Dialogue: 0,0:08:29.82,0:08:30.70,Default,,0000,0000,0000,,Có điều...
Dialogue: 0,0:08:31.55,0:08:32.49,Default,,0000,0000,0000,,Seraphim.
Dialogue: 0,0:08:32.49,0:08:35.87,Default,,0000,0000,0000,,Không lẽ cô định mặc bộ đồ đó\N đi quanh trường học?
Dialogue: 0,0:08:36.30,0:08:37.95,Default,,0000,0000,0000,,Ơ... thế này thì có gì...
Dialogue: 0,0:08:38.78,0:08:40.12,Default,,0000,0000,0000,,Ngu ngốc!
Dialogue: 0,0:08:40.67,0:08:42.83,Default,,0000,0000,0000,,Đã là cây thì phải ẩn trong rừng.
Dialogue: 0,0:08:42.83,0:08:44.33,Default,,0000,0000,0000,,Đã là người thì phải ẩn trong đám đông.
Dialogue: 0,0:08:44.74,0:08:47.48,Default,,0000,0000,0000,,Cô đã quên những gì được học ở làng rồi sao?
Dialogue: 0,0:08:57.71,0:08:59.43,Default,,0000,0000,0000,,Rốt cuộc đây là...
Dialogue: 0,0:09:00.19,0:09:03.32,Default,,0000,0000,0000,,Bóng ma trong nhà xí..., ôi, bóng ma nóng bỏng Sera-san!
Dialogue: 0,0:09:03.32,0:09:06.43,Default,,0000,0000,0000,,Excellent! Marvelous! Great!
Dialogue: 0,0:09:06.43,0:09:08.86,Default,,0000,0000,0000,,Gớm quá, đừng có nhìn nữa.
Dialogue: 0,0:09:08.86,0:09:10.38,Default,,0000,0000,0000,,Không là ta móc mắt ngươi ra đấy.
Dialogue: 0,0:09:10.38,0:09:14.01,Default,,0000,0000,0000,,Aikawa, tớ đang rảnh nè, mình đi chơi đi.
Dialogue: 0,0:09:15.03,0:09:16.32,Default,,0000,0000,0000,,Cái nhẫn đó là...
Dialogue: 0,0:09:17.80,0:09:19.54,Default,,0000,0000,0000,,Aikawa tặng đấy.
Dialogue: 0,0:09:19.54,0:09:20.78,Default,,0000,0000,0000,,Đã bảo đó là...
Dialogue: 0,0:09:20.78,0:09:21.69,Default,,0000,0000,0000,,Thích nhé.
Dialogue: 0,0:09:22.16,0:09:23.47,Default,,0000,0000,0000,,Phải trân trọng nó đấy.
Dialogue: 0,0:09:23.47,0:09:24.12,Default,,0000,0000,0000,,Ưm!
Dialogue: 0,0:09:24.63,0:09:26.00,Default,,0000,0000,0000,,Cái gì cơ?
Dialogue: 0,0:09:26.48,0:09:30.03,Default,,0000,0000,0000,,Ông thành loại người đó từ bao giờ vậy hả?!
Dialogue: 0,0:09:30.03,0:09:32.01,Default,,0000,0000,0000,,Hả?! Trả lời đi!
Dialogue: 0,0:09:32.01,0:09:33.84,Default,,0000,0000,0000,,Chuyện gì ồn ào thế?
Dialogue: 0,0:09:34.63,0:09:36.85,Default,,0000,0000,0000,,Làm gì cũng đừng to tiếng quá chứ.
Dialogue: 0,0:09:37.88,0:09:39.92,Default,,0000,0000,0000,,Mà Yoshida, cái nhẫn đó là sao?
Dialogue: 0,0:09:39.92,0:09:41.41,Default,,0000,0000,0000,,A, đây là...
Dialogue: 0,0:09:41.41,0:09:43.52,Default,,0000,0000,0000,,Đeo đồ trang sức là vi phạm nội quy đấy.
Dialogue: 0,0:09:52.63,0:09:55.13,Default,,0000,0000,0000,,Thầy sẽ tạm giữ nó.
Dialogue: 0,0:09:55.13,0:09:57.86,Default,,0000,0000,0000,,Khi nào về thì lên phòng giáo vụ nhận lại nhé.
Dialogue: 0,0:09:58.69,0:10:00.42,Default,,0000,0000,0000,,Aikawa...
Dialogue: 0,0:10:00.42,0:10:02.27,Default,,0000,0000,0000,,Biết làm sao được.
Dialogue: 0,0:10:03.56,0:10:05.96,Default,,0000,0000,0000,,Làm vợ thế này là hỏng rồi.
Dialogue: 0,0:10:08.29,0:10:10.29,Default,,0000,0000,0000,,Chào mừng!
Dialogue: 0,0:10:14.72,0:10:15.40,Default,,0000,0000,0000,,Cô tiên...
Dialogue: 0,0:10:17.30,0:10:18.52,Default,,0000,0000,0000,,Cô tiên?
Dialogue: 0,0:10:25.16,0:10:28.23,Default,,0000,0000,0000,,Vì con đã tìm lại hạnh phúc\N nên cô không còn ư...
Dialogue: 0,0:10:28.85,0:10:32.82,Default,,0000,0000,0000,,{\i1}Vì một tương lai tươi sáng của Aizawa-kun! Cạn ly!
Dialogue: 0,0:10:33.98,0:10:38.57,Default,,0000,0000,0000,,{\i1}Ờ, nếu bị đời xô ngã thì chỉ cần đứng dậy là xong thôi!
Dialogue: 0,0:10:38.95,0:10:42.49,Default,,0000,0000,0000,,{\i1}Nếu muốn uống rượu thì phải có dũng khí\N mà gạt bia đi đã.
Dialogue: 0,0:10:44.04,0:10:46.76,Default,,0000,0000,0000,,{\i1}Khi nào lại đến nhé!
Dialogue: 0,0:10:49.08,0:10:51.12,Default,,0000,0000,0000,,Cám ơn cô, cô tiên.
Dialogue: 0,0:10:51.12,0:10:53.98,Default,,0000,0000,0000,,Con sẽ không lạc lối nữa đâu.
Dialogue: 0,0:11:21.36,0:11:23.63,Default,,0000,0000,0000,,{\i1}Lửa trại và nhảy dân gian...
Dialogue: 0,0:11:25.08,0:11:28.51,Default,,0000,0000,0000,,{\i1}Nếu là ngày trước, có lẽ mình sẽ chỉ\N thở dài rồi quay đi...
Dialogue: 0,0:11:29.50,0:11:33.23,Default,,0000,0000,0000,,{\i1}Ấy vậy mà giờ đây, mình lại cảm thấy \Nthật nhẹ nhõm vì điều đó.
Dialogue: 0,0:11:33.89,0:11:36.84,Default,,0000,0000,0000,,Tuổi trẻ phải chăng là như vậy sao?
Dialogue: 0,0:11:38.59,0:11:42.29,Default,,0000,0000,0000,,Thấy mặt thầy mà làm cái mặt đó\N là ý gì đây hả?
Dialogue: 0,0:11:42.29,0:11:45.26,Default,,0000,0000,0000,,Sao thầy lại đứng trong hàng nữ vậy ạ?
Dialogue: 0,0:11:45.26,0:11:47.99,Default,,0000,0000,0000,,Còn phải hỏi sao? Cho đủ người.
Dialogue: 0,0:11:47.99,0:11:49.59,Default,,0000,0000,0000,,Trời hỡi ơi...
Dialogue: 0,0:11:49.59,0:11:52.81,Default,,0000,0000,0000,,Người cuối mình nắm tay trong lễ hội văn hóa\N lại là thầy sao...
Dialogue: 0,0:11:53.20,0:11:54.70,Default,,0000,0000,0000,,Không được nhé, Aikawa.
Dialogue: 0,0:11:54.70,0:11:57.07,Default,,0000,0000,0000,,Đừng đánh giá con người qua vẻ ngoài.
Dialogue: 0,0:11:57.65,0:12:04.20,Default,,0000,0000,0000,,Dù sao thì nhìn em, ai dám nghĩ em lại có một cô bé xinh đẹp\N làm cơm cho mỗi ngày đây.
Dialogue: 0,0:12:05.11,0:12:09.33,Default,,0000,0000,0000,,Đã vậy còn có một cô chị thân hình siêu chuẩn\N luôn hầu hạ công việc giặt giũ...
Dialogue: 0,0:12:09.33,0:12:10.28,Default,,0000,0000,0000,,Hả?!
Dialogue: 0,0:12:10.28,0:12:15.93,Default,,0000,0000,0000,,Lại còn một cô bé dễ thương như em gái\N cho em suốt ngày ảo tưởng nữa.
Dialogue: 0,0:12:15.93,0:12:16.68,Default,,0000,0000,0000,,Thật á?!
Dialogue: 0,0:12:16.68,0:12:17.99,Default,,0000,0000,0000,,Aikawa xấu quá!
Dialogue: 0,0:12:17.99,0:12:18.96,Default,,0000,0000,0000,,Khoan... không phải!
Dialogue: 0,0:12:19.43,0:12:21.93,Default,,0000,0000,0000,,Thầy, làm sao thầy biết?!
Dialogue: 0,0:12:21.93,0:12:22.93,Default,,0000,0000,0000,,Nomobuyo...
Dialogue: 0,0:12:23.57,0:12:26.53,Default,,0000,0000,0000,,{\i1}oshi, hashitawa, dokeda...
Dialogue: 0,0:12:26.88,0:12:28.72,Default,,0000,0000,0000,,{\i1}gummicha, de...
Dialogue: 0,0:12:29.39,0:12:30.18,Default,,0000,0000,0000,,{\i1}ribura
Dialogue: 1,0:12:50.67,0:12:51.97,Default,,0000,0000,0000,,{\pos(640,600)}Gọi chi?
Dialogue: 1,0:12:54.56,0:12:55.96,Default,,0000,0000,0000,,{\pos(640,600)}Gọi chi?
Dialogue: 0,0:12:45.61,0:12:47.87,Default,,0000,0000,0020,,Cô tiên!
Dialogue: 0,0:13:05.52,0:13:07.09,Default,,0000,0000,0020,,Cô tiên!
Dialogue: 0,0:13:09.63,0:13:13.12,Default,,0000,0000,0020,,Cuối cùng cũng được trở về hình dạng thật rồi!
Dialogue: 0,0:13:13.12,0:13:16.02,Default,,0000,0000,0020,,M-Mà khoan, sao thầy lại biến thành cô tiên?
Dialogue: 0,0:13:16.53,0:13:17.91,Default,,0000,0000,0020,,Ayumu ngốc!
Dialogue: 0,0:13:17.91,0:13:19.98,Default,,0000,0000,0020,,Tự dưng tôi nói chuyện lại được rồi nè!
Dialogue: 0,0:13:23.26,0:13:24.28,Default,,0000,0000,0000,,Cả hai sao thế?
Dialogue: 0,0:13:24.78,0:13:26.28,Necro Notebook,,0000,0000,0000,,Ma lực của em đã trở lại
Dialogue: 0,0:13:26.70,0:13:27.70,Default,,0000,0000,0000,,Ma lực á?
Dialogue: 0,0:13:27.70,0:13:29.08,Default,,0000,0000,0000,,Nhưng tại sao...
Dialogue: 0,0:13:29.08,0:13:32.47,Default,,0000,0000,0000,,Ma lực bị sụt áp một chút mà đã ngã quỵ ra...
Dialogue: 0,0:13:32.47,0:13:33.41,Default,,0000,0000,0000,,Dễ thương thật.
Dialogue: 0,0:13:35.85,0:13:37.60,Default,,0000,0000,0000,,Thiết bị hấp thụ ma lực của Haruna...
Dialogue: 0,0:13:37.60,0:13:39.70,Default,,0000,0000,0000,,Lúc nãy tôi ném đi rồi cơ mà!
Dialogue: 0,0:13:39.70,0:13:42.42,Default,,0000,0000,0000,,Tôi đã dùng cái này để hấp thụ ma lực\N từ cô bé kia đấy.
Dialogue: 0,0:13:43.14,0:13:44.74,Default,,0000,0000,0000,,Đó là Chris-sensei á?!
Dialogue: 0,0:13:44.74,0:13:46.25,Default,,0000,0000,0000,,Cô bé đó là ai vậy?
Dialogue: 0,0:13:46.25,0:13:49.50,Default,,0000,0000,0000,,Hể? Mọi người đều nhìn thấy... vậy nghĩa là...
Dialogue: 0,0:13:50.03,0:13:51.14,Default,,0000,0000,0000,,...không phải ảo giác?!
Dialogue: 0,0:13:53.73,0:13:55.68,Default,,0000,0000,0000,,Cô tiên không phải ảo giác của mình sao?!
Dialogue: 0,0:14:02.90,0:14:03.87,Default,,0000,0000,0000,,Chris?
Dialogue: 0,0:14:04.65,0:14:06.03,Default,,0000,0000,0000,,Ma trang thiếu nữ?
Dialogue: 0,0:14:06.03,0:14:07.34,Default,,0000,0000,0000,,Cô ta tên là Chris.
Dialogue: 0,0:14:07.34,0:14:09.07,Default,,0000,0000,0000,,Là sư phụ của Dai-sensei!
Dialogue: 0,0:14:09.35,0:14:13.58,Default,,0000,0000,0000,,Ngay cả Haruna mà cũng nhớ tên... \Nchắc hẳn cô phải nổi tiếng lắm.
Dialogue: 0,0:14:13.95,0:14:15.31,Default,,0000,0000,0000,,Chris ấy nhé...
Dialogue: 0,0:14:15.31,0:14:17.25,Default,,0000,0000,0000,,ngày xưa đã bị nữ hoàng của Virie...
Dialogue: 0,0:14:17.25,0:14:21.59,Default,,0000,0000,0000,,nguyền cho trở thành cái ông thầy vừa già vừa xấu\N của các em đấy.
Dialogue: 0,0:14:21.92,0:14:24.00,Default,,0000,0000,0000,,Một lời nguyền thật đáng sợ.
Dialogue: 0,0:14:24.00,0:14:25.06,Default,,0000,0000,0000,,Kinh khủng quá.
Dialogue: 0,0:14:25.06,0:14:27.44,Default,,0000,0000,0000,,Là tớ thì thà chết còn hơn.
Dialogue: 0,0:14:27.44,0:14:29.59,Default,,0000,0000,0000,,T-Trả cái nhẫn của tôi lại đây.
Dialogue: 0,0:14:30.14,0:14:34.84,Default,,0000,0000,0000,,Không chỉ thế, cách duy nhất để làm giảm lời nguyền\N là phải uống rượu.
Dialogue: 0,0:14:35.22,0:14:41.23,Default,,0000,0000,0000,,Chẳng còn cách nào khác, Chris đành phải ở lại thế giới này,\N chờ cơ hội trở về hình dạng cũ thôi.
Dialogue: 0,0:14:41.91,0:14:42.36,Default,,0000,0000,0000,,Thế rồi...
Dialogue: 0,0:14:43.19,0:14:46.16,Default,,0000,0000,0000,,cuối cùng mọi sự chuẩn bị đã hoàn thành.
Dialogue: 0,0:14:47.13,0:14:49.06,Default,,0000,0000,0000,,Một thực thể sở hữu nguồn ma lực to lớn...
Dialogue: 0,0:14:49.06,0:14:52.56,Default,,0000,0000,0000,,một thiên tài có thể chế tạo công cụ\N hấp thụ nguồn ma lực đó...
Dialogue: 0,0:14:52.94,0:14:58.37,Default,,0000,0000,0000,,rồi cả một chiếc nhẫn kìm hãm sức mạnh, \Ncho phép ta kiểm soát nguồn ma lực hấp thụ.
Dialogue: 0,0:14:59.20,0:15:02.72,Default,,0000,0000,0000,,Với cái này, Chris có thể tự do nói chuyện\N và thể hiện cảm xúc.
Dialogue: 0,0:15:02.72,0:15:06.15,Default,,0000,0000,0000,,Vậy... chuyên gia ma thuật mà Haruna nói đến là...
Dialogue: 0,0:15:06.15,0:15:07.60,Default,,0000,0000,0000,,Là Chris!
Dialogue: 0,0:15:07.60,0:15:09.62,Default,,0000,0000,0000,,Kẻ đứng đằng sau đợt tấn công của Megalo hôm qua là...
Dialogue: 0,0:15:09.62,0:15:11.01,Default,,0000,0000,0000,,Đó cũng là Chris!
Dialogue: 0,0:15:11.67,0:15:14.14,Default,,0000,0000,0000,,Lý do CD của Haruna và Tomonori không bán được hôm qua là...
Dialogue: 0,0:15:14.49,0:15:15.51,Default,,0000,0000,0000,,Đó cũng là Chris!
Dialogue: 0,0:15:15.51,0:15:19.13,Default,,0000,0000,0000,,K-Không lẽ... sáng nay trong nhà xí hết giấy vệ sinh\N cũng là...
Dialogue: 0,0:15:19.13,0:15:20.45,Default,,0000,0000,0000,,Cũng là vì Chris.
Dialogue: 0,0:15:20.45,0:15:21.73,Default,,0000,0000,0000,,Mùa hè nóng cũng là...
Dialogue: 0,0:15:21.73,0:15:23.25,Default,,0000,0000,0000,,Cũng là vì Chris.
Dialogue: 0,0:15:23.25,0:15:24.57,Default,,0000,0000,0000,,K-Không lẽ...
Dialogue: 0,0:15:25.14,0:15:27.57,Default,,0000,0000,0000,,Sự đau khổ... của thời đại này cũng là...
Dialogue: 0,0:15:27.93,0:15:30.40,Default,,0000,0000,0000,,Cũng là vì Chris.
Dialogue: 0,0:15:31.74,0:15:35.55,Default,,0000,0000,0000,,Sao có thể... Thật đáng sợ! Đáng sợ quá!
Dialogue: 0,0:15:35.55,0:15:37.03,Default,,0000,0000,0000,,Đừng để bị lừa, Ayumo ngốc!
Dialogue: 0,0:15:37.03,0:15:38.26,Default,,0000,0000,0000,,Làm gì có chuyện đó chứ!
Dialogue: 0,0:15:38.26,0:15:38.75,Default,,0000,0000,0000,,Cái gì?!
Dialogue: 0,0:15:42.41,0:15:44.79,Default,,0000,0000,0000,,Đúng là bỏ rượu hông có nổi.
Dialogue: 0,0:15:47.37,0:15:48.96,Default,,0000,0000,0000,,Muốn mua một chú cún...
Dialogue: 0,0:15:49.50,0:15:51.26,Default,,0000,0000,0000,,...rồi cho nó đánh nhau...
Dialogue: 0,0:15:51.69,0:15:53.05,Default,,0000,0000,0000,,Đ-Đây là...
Dialogue: 0,0:15:57.23,0:16:00.61,Default,,0000,0000,0000,,Dù sao thì hôm nay cũng là ngày cuối rồi...
Dialogue: 0,0:16:00.61,0:16:02.06,Default,,0000,0000,0000,,nên mọi người phải vui hết mình ha!
Dialogue: 0,0:16:02.98,0:16:06.15,Default,,0000,0000,0000,,{\i1}Bakateta, nichitoha, hakesona...
Dialogue: 0,0:16:06.15,0:16:09.90,Default,,0000,0000,0000,,{\i1}Higemono, moden, nohake sa...{\fad(0,800)}
Dialogue: 0,0:16:15.74,0:16:17.47,Default,,0000,0000,0000,,Á... gì thế này?!
Dialogue: 0,0:16:17.96,0:16:18.70,Default,,0000,0000,0000,,Không cử động được!
Dialogue: 0,0:16:22.58,0:16:24.49,Default,,0000,0000,0000,,Vừa mới đây, Aikawa-kun...
Dialogue: 0,0:16:24.49,0:16:29.29,Default,,0000,0000,0000,,còn thấy thất vọng vì người cuối nắm tay trong lễ hội\N lại là một ông thầy, đúng không?
Dialogue: 0,0:16:29.29,0:16:30.34,Default,,0000,0000,0000,,Thế thì sao chứ?
Dialogue: 0,0:16:30.34,0:16:35.59,Default,,0000,0000,0000,,Nhưng mà đằng sau lớp vỏ ấy là cô tiên yêu quý\N của Aikawa-kun mà.
Dialogue: 0,0:16:36.50,0:16:39.54,Default,,0000,0000,0000,,Aikawa, quả nhiên ông là Lolicon...
Dialogue: 0,0:16:39.54,0:16:40.47,Default,,0000,0000,0000,,Aikawa-kun...
Dialogue: 0,0:16:40.95,0:16:42.00,Default,,0000,0000,0000,,Hiểu nhầm rồi!
Dialogue: 0,0:16:42.00,0:16:44.60,Default,,0000,0000,0000,,Ai mà vui nổi\N khi nắm tay một lão già chứ!
Dialogue: 0,0:16:44.99,0:16:49.01,Default,,0000,0000,0000,,Như vậy là đánh giá con người qua vẻ ngoài rồi.
Dialogue: 0,0:16:49.01,0:16:51.99,Default,,0000,0000,0000,,Ai mà ngờ một ông thầy già hoắc\N thật ra lại là một cô gái chứ!
Dialogue: 0,0:16:51.99,0:16:52.99,Default,,0000,0000,0000,,Đó, chính nó!
Dialogue: 0,0:16:53.35,0:16:55.49,Default,,0000,0000,0000,,Thế gọi là đánh giá con người qua vẻ ngoài đấy.
Dialogue: 0,0:16:56.00,0:16:59.15,Default,,0000,0000,0000,,Chris cứ bị đánh giá như thế suốt thôi.
Dialogue: 0,0:16:59.15,0:17:00.49,Default,,0000,0000,0000,,Sai rồi!
Dialogue: 0,0:17:01.32,0:17:03.00,Default,,0000,0000,0000,,Đó là điều mà cô đã hiểu lầm.
Dialogue: 0,0:17:03.39,0:17:06.80,Default,,0000,0000,0000,,Giá trị của con người không nằm ở dáng hình...
Dialogue: 0,0:17:07.80,0:17:10.38,Default,,0000,0000,0000,,...mà nằm trong trái tim bọn họ.
Dialogue: 0,0:17:11.62,0:17:12.82,Default,,0000,0000,0000,,Anderson-kun...
Dialogue: 0,0:17:12.82,0:17:14.89,Default,,0000,0000,0000,,Vâng, một anh đạo đức giả!
Dialogue: 0,0:17:15.83,0:17:18.01,Default,,0000,0000,0000,,Oh! What happen?
Dialogue: 0,0:17:18.38,0:17:21.01,Default,,0000,0000,0000,,Anderson-kun!
Dialogue: 0,0:17:21.44,0:17:23.77,Default,,0000,0000,0000,,Rồi, tiếp đoạn đánh giá con người qua vẻ ngoài.
Dialogue: 0,0:17:24.16,0:17:25.39,Default,,0000,0000,0000,,Vậy... Yoshida Yuki-san...
Dialogue: 0,0:17:26.66,0:17:30.43,Default,,0000,0000,0000,,Một ông bác nhưng thật ra là một cô bé,\N ta gọi là gì?
Dialogue: 0,0:17:30.43,0:17:32.56,Default,,0000,0000,0000,,A... là...
Dialogue: 0,0:17:32.56,0:17:34.44,Default,,0000,0000,0000,,...là ông bác muốn trở thành cô bé!
Dialogue: 0,0:17:35.01,0:17:36.24,Default,,0000,0000,0000,,Tiếc quá.
Dialogue: 0,0:17:36.24,0:17:38.53,Default,,0000,0000,0000,,Câu trả lời là Ma trang thiếu nữ Chris!
Dialogue: 0,0:17:38.83,0:17:41.79,Default,,0000,0000,0000,,Chết tiệt! Trả cái nhẫn lại cho tôi đây!
Dialogue: 0,0:17:42.47,0:17:44.84,Default,,0000,0000,0000,,Chris ấy nhé, cái lúc mà làm giáo viên ấy...
Dialogue: 0,0:17:44.84,0:17:49.24,Default,,0000,0000,0000,,chỉ số gamma-GTP, rồi cholesterol trong máu cao lắm cơ...
Dialogue: 0,0:17:49.24,0:17:52.04,Default,,0000,0000,0000,,Là vì trong thân hình một lão già mà nhỉ.
Dialogue: 0,0:17:52.04,0:17:53.92,Default,,0000,0000,0000,,Đã nói thế thì đừng làm giọng dễ thương nữa đi!
Dialogue: 0,0:17:54.29,0:17:56.93,Default,,0000,0000,0000,,Lên cầu thang mà cũng thở hổn hển...
Dialogue: 0,0:17:56.93,0:17:58.93,Default,,0000,0000,0000,,Rồi hay quên tên người ta nè...
Dialogue: 0,0:17:59.33,0:18:00.68,Default,,0000,0000,0000,,Rồi bị đau lưng nè...
Dialogue: 0,0:18:01.15,0:18:03.68,Default,,0000,0000,0000,,Buổi sáng thức dậy cũng bị tê chân đó...
Dialogue: 0,0:18:04.17,0:18:08.49,Default,,0000,0000,0000,,rồi mỗi lần nhìn gương thì lại thấy mặt\Nmột ông già ngoắc nữa...
Dialogue: 0,0:18:08.49,0:18:10.77,Default,,0000,0000,0000,,Chris thật ra là một cô gái mà...
Dialogue: 0,0:18:11.10,0:18:13.99,Default,,0000,0000,0000,,sao lại phải trải qua những chuyện như vậy nhỉ?
Dialogue: 0,0:18:16.07,0:18:17.57,Default,,0000,0000,0000,,Thấy chưa. Đỏ mặt rồi kìa.
Dialogue: 0,0:18:18.20,0:18:21.07,Default,,0000,0000,0000,,Nhưng nếu tôi mà là một ông già ngoắc\N thì sao nhỉ?
Dialogue: 0,0:18:25.19,0:18:26.48,Default,,0000,0000,0000,,Chịu rồi...
Dialogue: 0,0:18:26.48,0:18:27.08,Default,,0000,0000,0000,,Quả đúng là...
Dialogue: 0,0:18:28.00,0:18:29.83,Default,,0000,0000,0000,,Địa ngục... chăng...?
Dialogue: 0,0:18:30.24,0:18:30.90,Default,,0000,0000,0000,,Thấy chưa.
Dialogue: 0,0:18:31.37,0:18:35.14,Default,,0000,0000,0000,,Nhưng các em cũng sẽ có ngày \Ntrở thành người lớn như vậy đó.
Dialogue: 0,0:18:35.14,0:18:36.03,Default,,0000,0000,0000,,Hể?
Dialogue: 0,0:18:36.03,0:18:38.70,Default,,0000,0000,0000,,Lớn lên là như vậy sao?
Dialogue: 0,0:18:38.70,0:18:40.44,Default,,0000,0000,0000,,Không, tớ không muốn lớn lên đâu!
Dialogue: 0,0:18:43.04,0:18:44.18,Default,,0000,0000,0000,,Kanami-chan!
Dialogue: 0,0:18:47.03,0:18:49.31,Default,,0000,0000,0000,,Khoan... đừng... dừng lại đi.
Dialogue: 0,0:18:49.70,0:18:53.68,Default,,0000,0000,0000,,Sao đâu nào. Cứ uống với nhau\N như mọi khi đi.
Dialogue: 0,0:18:53.68,0:18:56.74,Default,,0000,0000,0000,,Aikawa-kun... quả đúng là... Loli...
Dialogue: 0,0:18:57.03,0:18:58.12,Default,,0000,0000,0000,,Hiramatsu!
Dialogue: 0,0:18:58.12,0:19:02.62,Default,,0000,0000,0000,,À, mấy chiếc ghế sẽ tự phóng lên\N khi người ngồi tan vỡ trái tim đấy.
Dialogue: 0,0:19:10.25,0:19:12.30,Default,,0000,0000,0000,,Vẫn ổn chứ, Orito?
Dialogue: 0,0:19:12.30,0:19:15.21,Default,,0000,0000,0000,,Ờ, trái tim tôi có thể bẻ cong chứ không vỡ đâu.
Dialogue: 0,0:19:15.70,0:19:18.26,Default,,0000,0000,0000,,Vậy thì một món quà đặc biệt dành cho cậu.
Dialogue: 0,0:19:25.71,0:19:26.92,Default,,0000,0000,0000,,Meo!
Dialogue: 0,0:19:30.91,0:19:32.64,Default,,0000,0000,0000,,Sao lại thế này?!
Dialogue: 0,0:19:32.64,0:19:33.77,Default,,0000,0000,0000,,K-Không cử động được!
Dialogue: 0,0:19:34.23,0:19:36.78,Default,,0000,0000,0000,,Ví dụ như là làm thế này...
Dialogue: 0,0:19:37.47,0:19:39.37,Default,,0000,0000,0000,,Cơ thể mình... tự dưng...
Dialogue: 0,0:19:42.32,0:19:44.51,Default,,0000,0000,0000,,Đừng có nhìn, tên cặn bã...!
Dialogue: 0,0:19:44.51,0:19:46.03,Default,,0000,0000,0000,,Nóng quá!
Dialogue: 0,0:19:46.64,0:19:48.04,Default,,0000,0000,0000,,I can fly!
Dialogue: 0,0:19:49.54,0:19:53.39,Default,,0000,0000,0000,,Quên không báo trước, phấn khích quá\N là cũng tự động bị phóng lên đấy.
Dialogue: 0,0:19:55.16,0:19:56.90,Default,,0000,0000,0000,,Đủ lắm rồi.
Dialogue: 0,0:19:57.44,0:19:58.92,Default,,0000,0000,0000,,Kết thúc chuyện này đi.
Dialogue: 0,0:20:01.16,0:20:04.87,Default,,0000,0000,0000,,Hãy trả mọi người về như cũ\N cùng ma lực của Haruna đi!
Dialogue: 0,0:20:04.87,0:20:06.08,Default,,0000,0000,0000,,Không chịu!
Dialogue: 0,0:20:06.08,0:20:08.43,Default,,0000,0000,0000,,Thế thì Chris sẽ lại biến thành một ông già mất.
Dialogue: 0,0:20:08.98,0:20:11.17,Default,,0000,0000,0000,,Nhưng nếu không có ma lực, Haruna sẽ...
Dialogue: 0,0:20:12.10,0:20:14.61,Default,,0000,0000,0000,,Ayumu ngốc! Đừng có coi thường Haruna-chan nhé!
Dialogue: 0,0:20:15.57,0:20:19.81,Default,,0000,0000,0000,,Dù có ma lực hay không, tôi vẫn là\N ma trang thiếu nữ thiên tài Haruna-chan!
Dialogue: 0,0:20:19.81,0:20:21.90,Default,,0000,0000,0000,,Tôi vẫn có thể chiến đấu với Megalo đấy nhé!
Dialogue: 0,0:20:22.71,0:20:23.32,Default,,0000,0000,0000,,Haruna...
Dialogue: 0,0:20:28.48,0:20:30.05,Default,,0000,0000,0000,,Không, không được!
Dialogue: 0,0:20:30.05,0:20:32.08,Default,,0000,0000,0000,,Chris, hãy trả ma lực cho Haruna đi!
Dialogue: 0,0:20:32.68,0:20:36.54,Default,,0000,0000,0000,,Vậy thì thử dùng vũ lực ép Chris trả lại xem.
Dialogue: 0,0:20:40.12,0:20:41.34,Default,,0000,0000,0000,,Cử động lại được rồi!
Dialogue: 0,0:20:42.08,0:20:43.22,Default,,0000,0000,0000,,150%!
Dialogue: 0,0:20:43.86,0:20:44.55,Default,,0000,0000,0000,,200...
Dialogue: 0,0:20:45.03,0:20:46.00,Default,,0000,0000,0000,,300...
Dialogue: 0,0:20:46.54,0:20:47.47,Default,,0000,0000,0000,,400!
Dialogue: 0,0:20:47.83,0:20:52.02,Default,,0000,0000,0000,,Dám thả ta ra thì... chuẩn bị hối tiếc đi!
Dialogue: 0,0:21:20.12,0:21:22.53,Default,,0000,0000,0000,,Từ hồi ở phòng thí nghiệm ấy...
Dialogue: 0,0:21:22.53,0:21:26.38,Default,,0000,0000,0000,,Chris đã luôn coi Aikawa-kun là bạn nhậu tốt của Chris.
Dialogue: 0,0:21:26.38,0:21:28.52,Default,,0000,0000,0000,,Thật vậy sao, Ayumu ngốc?
Dialogue: 0,0:21:28.52,0:21:30.11,Default,,0000,0000,0000,,Chưa đủ tuổi mà đã uống rượu...
Dialogue: 0,0:21:30.11,0:21:31.89,Default,,0000,0000,0000,,Quả đúng là một tên cặn bã.
Dialogue: 0,0:21:32.32,0:21:34.13,Default,,0000,0000,0000,,Làm gì có chứ!
Dialogue: 0,0:21:34.13,0:21:36.47,Default,,0000,0000,0000,,Ai là bạn của cô chứ hả?!
Dialogue: 0,0:21:36.47,0:21:38.51,Default,,0000,0000,0000,,Thế sao? Tiếc thật...
Dialogue: 0,0:21:39.03,0:21:40.92,Default,,0000,0000,0000,,Biết sao được nhỉ.
Dialogue: 0,0:21:40.92,0:21:41.65,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:21:42.88,0:21:46.50,Default,,0000,0000,0000,,Chris luôn đợi Onii-chan quay lại đấy.
Dialogue: 0,0:22:02.80,0:22:07.05,Necro Notebook,,0600,0000,0000,,{\pos(1006,554)\bord0\c&HFFFFFF&}Xấu xa
Dialogue: 0,0:22:03.36,0:22:06.38,Default,,0000,0000,0000,,Đã gần mức quấy rối tình dục đến thế rồi...
Dialogue: 0,0:22:06.38,0:22:08.25,Default,,0000,0000,0000,,Không phải! Hiểu lầm rồi!
Dialogue: 0,0:22:08.25,0:22:11.84,Default,,0000,0000,0000,,
Dialogue: 0,0:22:09.02,0:22:12.31,Default,,0000,0000,0000,,Vậy ra "đệ nhất quái vật" mà trưởng lão nói đến \N là như vậy...
Dialogue: 0,0:22:12.31,0:22:15.05,Default,,0000,0000,0000,,Nè nè! Nghe tôi giải thích đã!
Dialogue: 0,0:22:16.01,0:22:17.44,Default,,0000,0000,0000,,Phiền rồi đây.
Dialogue: 0,0:22:17.84,0:22:21.56,Default,,0000,0000,0000,,Vậy là Chris đã khôi phục sức mạnh...
Dialogue: 0,0:22:24.07,0:22:25.39,Default,,0000,0000,0000,,Ariel-sensei.
Dialogue: 0,0:22:25.94,0:22:26.82,Default,,0000,0000,0000,,Hmm?
Dialogue: 0,0:22:27.47,0:22:28.97,Default,,0000,0000,0000,,Chris à?
Dialogue: 0,0:22:30.00,0:22:32.32,Default,,0000,0000,0000,,Tôi biết điểm yếu của cô ta đấy.
Dialogue: 1,0:24:07.69,0:24:11.10,Default,,0000,0000,0000,,Ôi, hôm nay chẳng nói được câu nào!
Dialogue: 1,0:24:11.10,0:24:14.48,Default,,0000,0000,0000,,Người thật mà chen vào ảo tưởng, sao mà ăn gian quá ha.
