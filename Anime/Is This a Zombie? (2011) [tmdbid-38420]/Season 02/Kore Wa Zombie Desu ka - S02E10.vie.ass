Dialogue: 0,0:20:10.33,0:20:16.23,Default,,0000,0000,0000,,Rồi sao chứ? Chính em đã biến anh thành Zombie mà.
Dialogue: 0,0:20:19.68,0:20:21.86,Necro Notebook,,0000,0000,0000,,Làm bữa tối
Dialogue: 0,0:20:21.99,0:20:22.99,Necro Notebook,,0000,0000,0000,,Thịt nữa
Dialogue: 0,0:20:24.60,0:20:26.04,Default,,0000,0000,0000,,Những trang viết cũ!
Dialogue: 0,0:20:26.66,0:20:27.74,Necro Notebook,,0000,0000,0000,,Thú vị lắm
Dialogue: 0,0:20:27.87,0:20:29.24,Necro Notebook,,0000,0000,0000,,nên đừng làm như vậy nữa nhé
Dialogue: 0,0:20:29.37,0:20:30.87,Necro Notebook,,0000,0000,0000,,Anh là ai?
Dialogue: 0,0:20:35.13,0:20:36.84,Default,,0000,0000,0000,,Mình... là ai?
Dialogue: 0,0:20:37.68,0:20:42.01,Default,,0000,0000,0000,,Mình... mình... mình... mình...!
Dialogue: 0,0:20:44.41,0:20:45.76,Default,,0000,0000,0000,,Đừng khóc, Necromancer!
Dialogue: 0,0:20:46.32,0:20:47.89,Default,,0000,0000,0000,,Chẳng phải chúng ta muốn đưa Ayumu ngày xưa\N trở về sao?
Dialogue: 0,0:20:59.26,0:21:00.15,Default,,0000,0000,0000,,Ayumu ngốc!
Dialogue: 0,0:21:01.15,0:21:03.07,Default,,0000,0000,0000,,Đừng gọi ta là Ayumu ngốc!
Dialogue: 0,0:21:03.65,0:21:05.07,Default,,0000,0000,0000,,Ta là "Another"!
Dialogue: 0,0:21:05.66,0:21:07.53,Default,,0000,0000,0000,,Hay còn gọi là "Alternative"!
Dialogue: 0,0:21:07.53,0:21:09.54,Default,,0000,0000,0000,,Im đi! Ông là Ayumu ngốc!
Dialogue: 0,0:21:09.54,0:21:10.22,Default,,0000,0000,0000,,Ayumu!
Dialogue: 2,0:21:11.20,0:21:13.16,Necro Notebook,,0000,0000,0000,,{\bord0\blur0.8\c&HDADAD4&\3c&HEEECEB&\fscx160\fscy156\pos(862,661)}Anh là ai?
Dialogue: 1,0:21:11.20,0:21:13.16,Necro Notebook,,0000,0000,0000,,{\bord2\blur8.5\c&HA49C6E&\3c&HA49C6E&\fscx160\fscy156\pos(862,661)}Anh là ai?
Dialogue: 0,0:21:11.20,0:21:13.16,Necro Notebook,,0000,0000,0000,,{\bord2\blur4.5\c&HA49C6E&\3c&H723E44&\fscx160\fscy156\pos(862,661)}Anh là ai?
Dialogue: 0,0:21:18.34,0:21:19.29,Default,,0000,0000,0000,,Anh là...
Dialogue: 0,0:21:21.28,0:21:22.55,Default,,0000,0000,0000,,{\i1}Trở lại đi...
Dialogue: 0,0:21:23.17,0:21:24.05,Default,,0000,0000,0000,,{\i1}Ayumu!
Dialogue: 0,0:21:27.36,0:21:28.00,Default,,0000,0000,0000,,Yuu...?
Dialogue: 0,0:21:35.23,0:21:36.81,Default,,0000,0000,0000,,D-Dừng lại! Haruna!
Dialogue: 0,0:21:36.81,0:21:39.15,Default,,0000,0000,0000,,Trở lại đi, Ayumu!
Dialogue: 0,0:21:50.38,0:21:52.01,Default,,0000,0000,0000,,Phải rồi, mình...
Dialogue: 0,0:21:54.04,0:21:55.78,Default,,0000,0000,0000,,Ayumu ngốc...!
Dialogue: 0,0:21:55.78,0:21:58.81,Default,,0000,0000,0000,,Có muốn nói gì không, tên cặn bã?
Dialogue: 0,0:22:00.16,0:22:03.68,Default,,0000,0000,0000,,À, tôi đã trở về. Với cả...
Dialogue: 0,0:22:04.57,0:22:06.51,Default,,0000,0000,0000,,Lấy giùm phần dưới được không?
Dialogue: 0,0:22:06.51,0:22:08.30,Default,,0000,0000,0000,,Phần dưới? Biến thái à?!
Dialogue: 0,0:22:09.88,0:22:13.31,Default,,0000,0000,0000,,Đúng là một tên cặn bã vô dụng.
Dialogue: 0,0:22:13.31,0:22:15.31,Necro Notebook,,0000,0000,0000,,{Eu} Nhìn mặt nào cũng là một tên ngốc
Dialogue: 0,0:22:18.40,0:22:21.77,Default,,0000,0000,0000,,Có thể coi là đậu vớt.
Dialogue: 0,0:22:24.48,0:22:27.57,Default,,0000,0000,0020,,{\i1}Dù hầu hết đều không nhận ra...
Dialogue: 0,0:22:28.10,0:22:32.05,Default,,0000,0000,0020,,{\i1\q2}nhưng thế giới đầy rẫy những bí mật\N không nên được tiết lộ.
Dialogue: 0,0:22:32.91,0:22:37.21,Default,,0000,0000,0020,,{\q2}Ưm. Aikawa Ayumu tuy là con người nhưng vẫn thú vị ghê.
Dialogue: 0,0:22:38.60,0:22:40.70,Default,,0000,0000,0020,,Xin lỗi. Bị lôi cuốn quá.
Dialogue: 0,0:22:43.25,0:22:47.34,Default,,0000,0000,0020,,{\i1}và một khi nhận ra, ta sẽ chẳng thể quay đầu lại.
Dialogue: 0,0:22:49.24,0:22:53.71,Default,,0000,0000,0020,,Chẳng riêng gì Nene, giờ cả Ariel cũng đi theo Aikawa-kun rồi.
Dialogue: 0,0:22:54.51,0:22:56.35,Default,,0000,0000,0020,,Đúng là người được chọn nhỉ.
Dialogue: 0,0:22:56.35,0:22:59.85,Default,,0000,0000,0020,,Christ sẽ lo cho Aikawa-kun mà, nên đừng lo.
Dialogue: 0,0:23:00.84,0:23:04.33,Default,,0000,0000,0020,,Thế thì tôi sẽ mất một trợ lý rồi...
Dialogue: 0,0:23:05.31,0:23:10.36,Default,,0000,0000,0020,,{\i1}Vì làm sao làm ngơ trước những con người thú vị thế này được.
Dialogue: 0,0:23:11.01,0:23:15.37,Default,,0000,0000,0020,,{\q2}Ký ức của tôi trở lại rồi\N nên Haruna được ở lại đây nhỉ?
Dialogue: 0,0:23:16.14,0:23:17.79,Default,,0000,0000,0020,,Ayumu ngốc!
Dialogue: 0,0:23:17.79,0:23:21.34,Default,,0000,0000,0020,,Bỏ cái giọng làm như "Tôi muốn ở bên ông" đi nhé!
Dialogue: 0,0:23:21.34,0:23:22.50,Default,,0000,0000,0020,,Tưởng bở rồi đó!
Dialogue: 0,0:23:22.96,0:23:24.72,Default,,0000,0000,0020,,Tưởng bở gì chứ?
Dialogue: 0,0:23:24.72,0:23:27.30,Default,,0000,0000,0020,,Đúng là một tên cặn bã kinh tởm.
Dialogue: 0,0:23:27.30,0:23:27.88,Default,,0000,0000,0020,,Sera.
Dialogue: 0,0:23:29.26,0:23:32.89,Default,,0000,0000,0020,,Nhưng không như vậy thì đâu còn là Aikawa Ayumu nhỉ.
Dialogue: 0,0:23:43.82,0:23:46.52,Default,,0000,0000,0020,,Trở lại bình thường thì tốt rồi, nhưng mà...
Dialogue: 0,0:23:46.52,0:23:48.40,Default,,0000,0000,0020,,nỗi phiền cũng chẳng vơi đi ha.
Dialogue: 0,0:23:52.41,0:23:54.91,Necro Notebook,,0000,0000,0000,,{eu} Như vậy là được rồi
Dialogue: 0,0:23:58.85,0:24:00.26,Default,,0000,0000,0000,,Có lẽ thế.
