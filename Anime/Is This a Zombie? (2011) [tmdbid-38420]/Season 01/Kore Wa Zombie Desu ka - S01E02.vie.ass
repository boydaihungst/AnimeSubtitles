Dialogue: 0,0:00:25.67,0:00:29.34,Default,,0000,0000,0000,,Đêm hôm đó... tôi... đã bị giết.{\fad(0,400)}
Dialogue: 0,0:00:42.67,0:00:46.70,Default,,0000,0000,0000,,Thế rồi tôi đã gặp một cô gái bí ẩn.
Dialogue: 0,0:00:51.75,0:00:52.66,Default,,0000,0000,0000,,Dừng lại đi!
Dialogue: 0,0:00:52.66,0:00:53.70,Default,,0000,0000,0000,,Đừng nhìn mà!
Dialogue: 0,0:00:53.70,0:00:55.33,Default,,0000,0000,0000,,Đừng nhìn tôi nữa mà!
Dialogue: 0,0:00:55.33,0:00:58.85,Default,,0000,0000,0000,,Aikawa, gì thế này?! Sao ông lại ăn mặc kiểu đó?!
Dialogue: 0,0:01:00.14,0:01:03.81,Default,,0000,0000,0000,,Mình tiêu thiệt rồi!
Dialogue: 0,0:01:03.81,0:01:06.21,Default,,0000,0000,0000,,Tôi... là một zombie.
Dialogue: 0,0:01:06.21,0:01:08.82,Default,,0000,0000,0000,,À, nhân tiện, là một Ma trang thiếu nữ.
Dialogue: 0,0:02:42.06,0:02:45.67,Default,,0000,0000,0000,,Một người đàn ông lạ mặt bảo là ông ta đến từ phương xa...
Dialogue: 0,0:02:45.67,0:02:48.30,Default,,0000,0000,0000,,Rốt cuộc là đời tôi đã được cứu.
Dialogue: 0,0:02:49.32,0:02:52.24,Default,,0000,0000,0000,,Bằng ma thuật, tôi đã phục hồi những thứ đổ nát...
Dialogue: 0,0:02:52.24,0:02:55.69,Default,,0000,0000,0000,,...và xóa sạch trí nhớ của những người chứng kiến.
Dialogue: 0,0:02:55.69,0:02:57.66,Default,,0000,0000,0000,,Ma trang thiếu nữ đúng là vạn năng thật.
Dialogue: 0,0:02:58.47,0:03:03.05,Default,,0000,0000,0000,,Không, bị biến thành ma trang thiếu nữ... tôi chẳng thấy vui chút nào đâu.
Dialogue: 0,0:03:05.66,0:03:09.89,Default,,0000,0000,0000,,Từ đó đến nay đã một tuần, chưa thấy thêm \NMegalo nào xuất hiện.
Dialogue: 0,0:03:09.89,0:03:12.07,Default,,0000,0000,0000,,Và tôi đang dần thích nghi với cuộc sống mới.
Dialogue: 1,0:03:12.66,0:03:14.50,Default,,0000,0000,0000,,Chẳng phải tôi cam chịu hay gì...
Dialogue: 0,0:03:14.50,0:03:16.50,Default,,0000,0000,0000,,Tôi chỉ ngại nghĩ nhiều về những thứ phức tạp.
Dialogue: 0,0:03:16.85,0:03:18.50,Default,,0000,0000,0000,,Chỉ là như thế thôi.
Dialogue: 0,0:03:24.77,0:03:27.32,Default,,0000,0000,0000,,Giờ thì... cơm nào, cơm nào...
Dialogue: 0,0:03:28.37,0:03:31.07,Default,,0000,0000,0000,,Tôi làm món trứng chiên ngon lắm đó.
Dialogue: 0,0:03:32.92,0:03:36.87,Default,,0000,0000,0000,,Không phải là tôi làm vì ông đâu nhé.
Dialogue: 0,0:03:38.11,0:03:41.99,Default,,0000,0000,0000,,Hì hục trong bếp suốt cả sáng, để xem\N nhỏ làm được gì nào.
Dialogue: 0,0:03:46.50,0:03:48.40,Default,,0000,0000,0000,,Đúng là trông ngon thật.
Dialogue: 0,0:03:48.76,0:03:51.40,Default,,0000,0000,0000,,Nhưng chắc lần sau mình sẽ bảo nhỏ \Nphong phú hóa nó một tý.
Dialogue: 0,0:03:55.04,0:03:56.22,Default,,0000,0000,0000,,Cơm?
Dialogue: 0,0:03:57.35,0:03:59.05,Default,,0000,0000,0000,,Tha cho con đi trời...
Dialogue: 0,0:03:59.46,0:04:02.80,Default,,0000,0000,0000,,Chẳng hiểu sao nhưng mình có cảm giác...\N quả cuối này cũng là...
Dialogue: 0,0:04:07.58,0:04:11.00,Default,,0000,0000,0000,,Aikawa, lại còn đem cơm trưa cơ à? \N Hiếm thấy nha.
Dialogue: 0,0:04:12.13,0:04:14.99,Default,,0000,0000,0000,,Ăn chỉ toàn một thứ thế kia \Nmà không thấy ngán sao?
Dialogue: 0,0:04:14.99,0:04:17.51,Default,,0000,0000,0000,,Tôi thích ăn trứng chiên ấy mà.
Dialogue: 0,0:04:21.77,0:04:24.05,Default,,0000,0000,0000,,Ngon quá! Sao lại có thể ngon đến thế kia chứ?
Dialogue: 0,0:04:24.05,0:04:27.12,Default,,0000,0000,0000,,Nói linh tinh gì thế? Chỉ là trứng chiên thôi, \Ngì đến nỗi...
Dialogue: 0,0:04:28.48,0:04:30.17,Default,,0000,0000,0000,,Ngon vãi cả linh hồn thế này?
Dialogue: 0,0:04:30.17,0:04:33.26,Default,,0000,0000,0000,,Chúng mày, cơm hộp của Aikawa\N có vấn đề nè!
Dialogue: 0,0:04:34.78,0:04:36.04,Default,,0000,0000,0000,,Ngon quá!
Dialogue: 0,0:04:36.04,0:04:37.34,Default,,0000,0000,0000,,Đổi bánh với cái này nhé!
Dialogue: 0,0:04:42.21,0:04:43.18,Default,,0000,0000,0000,,Tôi về rồi đây.
Dialogue: 0,0:04:45.95,0:04:49.44,Default,,0000,0000,0000,,Lại cái điệu cười tự mãn đó, nhưng lần này\N tôi bỏ qua cho đấy.
Dialogue: 0,0:04:49.44,0:04:50.69,Default,,0000,0000,0000,,Tôi là thiên tài mà lại.
Dialogue: 0,0:04:51.14,0:04:53.91,Default,,0000,0000,0000,,Thật chẳng ngờ là bà biết nấu ăn ha.
Dialogue: 0,0:04:53.91,0:04:55.61,Default,,0000,0000,0000,,Lần sau thử nấu món khác nhé.
Dialogue: 0,0:04:55.61,0:04:57.99,Default,,0000,0000,0000,,Ít ra thì cũng phải có cơm chứ.
Dialogue: 0,0:04:57.99,0:05:01.09,Default,,0000,0000,0000,,Im đi! Tôi sẽ bắt ông ăn trứng chiên \Nsuốt ngày đó!
Dialogue: 0,0:05:01.45,0:05:02.86,Default,,0000,0000,0000,,Chẳng hiểu bà nói gì cả.
Dialogue: 0,0:05:02.86,0:05:04.26,Default,,0000,0000,0000,,Tôi đói rồi.
Dialogue: 0,0:05:04.62,0:05:07.32,Default,,0000,0000,0000,,Tự bà đi nấu lại chẳng ngon hơn sao?
Dialogue: 0,0:05:07.32,0:05:09.74,Default,,0000,0000,0000,,Tôi muốn ăn gì đó khác ngoài trứng chiên.
Dialogue: 0,0:05:11.31,0:05:13.71,Default,,0000,0000,0000,,Được rồi, bữa tối sẽ có ngay.
Dialogue: 0,0:05:25.46,0:05:26.47,Default,,0000,0000,0000,,Xong rồi này.
Dialogue: 0,0:05:27.24,0:05:29.08,Default,,0000,0000,0000,,Đây là kim chi xào thịt heo à?
Dialogue: 0,0:05:29.08,0:05:30.40,Default,,0000,0000,0000,,Bụng bà đang sôi lên rồi đây.
Dialogue: 0,0:05:31.80,0:05:34.91,Default,,0000,0000,0000,,Bà... không phản ứng bình thường được sao?
Dialogue: 0,0:05:34.91,0:05:37.58,Default,,0000,0000,0000,,Phải như thế mới giống người từ\N thế giới khác chứ.
Dialogue: 0,0:05:37.58,0:05:38.98,Default,,0000,0000,0000,,Chơi cái trò gì vậy?
Dialogue: 0,0:05:38.98,0:05:40.05,Default,,0000,0000,0000,,Nhanh thế?!
Dialogue: 0,0:05:40.05,0:05:40.84,Default,,0000,0000,0000,,Có ngay.
Dialogue: 0,0:05:48.82,0:05:53.11,Default,,0000,0000,0000,,Onii-chan về trễ quá à, bỏ em đói muốn chết.
Dialogue: 0,0:05:53.11,0:05:55.65,Default,,0000,0000,0000,,Xin lỗi nhé. Em ăn nhiều vào!
Dialogue: 0,0:05:57.00,0:06:00.92,Default,,0000,0000,0000,,Ăn tối xong rồi, em muốn tắm chung với Onii-chan.
Dialogue: 0,0:06:02.29,0:06:05.28,Default,,0000,0000,0000,,Em đã lớn rồi mà, anh phải làm sao với em đây?
Dialogue: 0,0:06:05.28,0:06:06.21,Default,,0000,0000,0000,,Cái gì cơ?
Dialogue: 0,0:06:08.74,0:06:10.01,Default,,0000,0000,0000,,Cái đó thì chịu rồi.
Dialogue: 0,0:06:10.01,0:06:16.11,Default,,0000,0000,0000,,Ấy dà. Bây giờ tôi mới biết là cơm ở thế giới này\N giúp hồi phục ma lực cơ đấy.
Dialogue: 0,0:06:16.11,0:06:18.04,Default,,0000,0000,0000,,Ayumu, cho một chén siêu đầy nữa nào!
Dialogue: 0,0:06:18.45,0:06:19.55,Default,,0000,0000,0000,,Rồi, rồi.
Dialogue: 0,0:06:19.55,0:06:21.96,Default,,0000,0000,0000,,Cơm nào, cơm nào. Nhanh lên.
Dialogue: 0,0:06:21.96,0:06:24.59,Default,,0000,0000,0000,,Đợi chút coi nào. Tôi đang xới đây.
Dialogue: 0,0:06:25.40,0:06:29.05,Default,,0000,0000,0000,,Thôi, dù sao thì Haruna ở đây có vẻ ổn.
Dialogue: 0,0:06:29.05,0:06:31.09,Default,,0000,0000,0000,,Chắc cũng được một khoảng thời gian.
Dialogue: 0,0:06:31.09,0:06:32.95,Default,,0000,0000,0000,,Thêm một chén nữa nào!
Dialogue: 0,0:06:34.77,0:06:38.77,Default,,0000,0000,0000,,Ôi, Onii-chan nấu cơm ngon quá chừng hà!
Dialogue: 0,0:06:38.77,0:06:41.50,Default,,0000,0000,0000,,Rồi, rồi. Onii-chan biết việc của mình rồi. {your big brother has his work cut out for him}
Dialogue: 0,0:06:42.29,0:06:44.98,Default,,0000,0000,0000,,Tôi muốn một bát Miso súp.
Dialogue: 0,0:06:45.39,0:06:46.32,Default,,0000,0000,0000,,Vâng, vâng.
Dialogue: 0,0:06:50.93,0:06:53.17,Default,,0000,0000,0000,,Ơ mà... cô là ai?
Dialogue: 0,0:06:54.57,0:06:55.68,Default,,0000,0000,0000,,Miso súp?
Dialogue: 0,0:06:56.18,0:06:58.56,Default,,0000,0000,0000,,Cô là... Miso súp?
Dialogue: 0,0:07:01.19,0:07:02.53,Default,,0000,0000,0000,,Cám ơn bữa ăn.
Dialogue: 0,0:07:03.55,0:07:05.86,Default,,0000,0000,0000,,Trông cô ta cũng trạc tuổi mình.
Dialogue: 0,0:07:06.31,0:07:08.24,Default,,0000,0000,0000,,Mà nè, cô ta là ai?
Dialogue: 0,0:07:08.72,0:07:10.62,Default,,0000,0000,0000,,Haruna không quen cô ấy à?
Dialogue: 0,0:07:11.21,0:07:12.36,Default,,0000,0000,0000,,Vậy thì chắc là...
Dialogue: 0,0:07:15.49,0:07:17.92,Default,,0000,0000,0000,,Eu cũng không quen cô ta.
Dialogue: 0,0:07:18.24,0:07:19.53,Default,,0000,0000,0000,,Nè, cô gì ơi...
Dialogue: 0,0:07:19.53,0:07:22.37,Default,,0000,0000,0000,,Sao cô không tự giới thiệu nhỉ?
Dialogue: 0,0:07:22.83,0:07:24.02,Default,,0000,0000,0000,,Được rồi.
Dialogue: 0,0:07:24.02,0:07:26.87,Default,,0000,0000,0000,,Tôi là Seraphim.
Dialogue: 0,0:07:26.87,0:07:28.13,Default,,0000,0000,0000,,Người ngoại quốc?
Dialogue: 0,0:07:28.87,0:07:31.42,Default,,0000,0000,0000,,Chắc là từ cái chỗ nào lạ \Nhoắc đây mà...
Dialogue: 0,0:07:32.26,0:07:34.65,Default,,0000,0000,0000,,Tôi thích bí kiếm chiêu Tsubame gaeshi.
Dialogue: 0,0:07:35.66,0:07:37.89,Default,,0000,0000,0000,,Tôi thuần thục bí kiếm chiêu Tsubame gaeshi.
Dialogue: 0,0:07:38.29,0:07:41.14,Default,,0000,0000,0000,,Sở thích của tôi là bí kiếm chiêu Tsubame gaeshi.
Dialogue: 0,0:07:41.94,0:07:45.00,Default,,0000,0000,0000,,Cái gì cũng là bí kiếm chiêu Tsubame gaeshi hết vậy?
Dialogue: 0,0:07:45.00,0:07:46.54,Default,,0000,0000,0000,,Cô đến đây chi vậy?
Dialogue: 0,0:07:46.54,0:07:49.85,Default,,0000,0000,0000,,Eucliwood Hellscythe-dono, tôi thỉnh cầu cô giúp đỡ.
Dialogue: 0,0:07:52.57,0:07:57.51,Default,,0000,0000,0000,,Nhiệm vụ của tôi là mời Hellscythe-dono đi cùng tôi.
Dialogue: 0,0:07:57.51,0:07:58.49,Default,,0000,0000,0000,,Đi đâu?
Dialogue: 0,0:07:58.92,0:08:00.16,Default,,0000,0000,0000,,Đến làng ninja.
Dialogue: 0,0:08:00.57,0:08:03.09,Default,,0000,0000,0000,,Lại còn như thế nữa cơ à?
Dialogue: 0,0:08:03.09,0:08:05.36,Default,,0000,0000,0000,,Vậy tức là cô là ninja?
Dialogue: 0,0:08:05.36,0:08:08.69,Default,,0000,0000,0000,,Phải, tôi là Ninja hút máu.
Dialogue: 0,0:08:09.16,0:08:10.37,Default,,0000,0000,0000,,Hút máu...
Dialogue: 0,0:08:15.03,0:08:18.57,Default,,0000,0000,0000,,Có cần thiết phải làm thế không, Eu...
Dialogue: 0,0:08:24.85,0:08:28.19,Default,,0000,0000,0000,,Mà cậu là gì với Hellscythe-dono?
Dialogue: 0,0:08:28.68,0:08:32.73,Default,,0000,0000,0000,,À... có thể gọi tôi là người bảo hộ cho cô ấy...
Dialogue: 0,0:08:32.73,0:08:34.03,Default,,0000,0000,0000,,Onii-chan.
Dialogue: 0,0:08:35.82,0:08:39.24,Default,,0000,0000,0000,,Không gọi tôi là Onii-chan được sao?
Dialogue: 0,0:08:41.44,0:08:43.54,Default,,0000,0000,0000,,Vậy thì tôi cũng sẽ làm người hầu cho cô.
Dialogue: 0,0:08:44.07,0:08:46.42,Default,,0000,0000,0000,,Xin hãy gọi tôi là Sera.
Dialogue: 0,0:08:50.10,0:08:54.17,Default,,0000,0000,0000,,Vậy thì tôi sẽ chiếm chỗ của \Ntên đàn ông vô dụng này.
Dialogue: 0,0:08:54.17,0:08:57.83,Default,,0000,0000,0000,,Tự nhiên chui vào nhà người ta rồi lại còn nói thế,\N bất lịch sự quá đó.
Dialogue: 0,0:08:57.83,0:09:01.81,Default,,0000,0000,0000,,Tôi không cần giữ phép với một tên \Nngu ngốc vô dụng.
Dialogue: 0,0:09:02.70,0:09:05.35,Default,,0000,0000,0000,,Chúng ta hãy đi đến một nơi không có người.
Dialogue: 0,0:09:06.41,0:09:09.77,Default,,0000,0000,0000,,Nếu có thể thì tôi không muốn đánh nhau\N với con gái đâu.
Dialogue: 0,0:09:10.11,0:09:15.55,Default,,0000,0000,0000,,Tôi sẽ cho Hellscythe-dono thấy ai mới xứng đáng \Nlàm người hầu của cô ấy hơn.
Dialogue: 0,0:09:25.68,0:09:26.72,Default,,0000,0000,0000,,Nè.
Dialogue: 0,0:09:27.17,0:09:28.56,Default,,0000,0000,0000,,Tôi không cần bà giúp.
Dialogue: 0,0:09:28.99,0:09:31.00,Default,,0000,0000,0000,,Đời nào mà tôi thèm giúp ông.
Dialogue: 0,0:09:31.00,0:09:32.32,Default,,0000,0000,0000,,Bắt đầu nhanh nhanh đi.
Dialogue: 0,0:09:33.05,0:09:35.52,Default,,0000,0000,0000,,Bà... cái gì cũng nói được à?
Dialogue: 0,0:09:35.52,0:09:38.10,Default,,0000,0000,0000,,Để mất tập trung là nguy hiểm lắm đó.
Dialogue: 0,0:09:38.10,0:09:40.23,Default,,0000,0000,0000,,Cô là Sera, phải không?
Dialogue: 0,0:09:40.23,0:09:41.76,Default,,0000,0000,0000,,Cô định giết tôi thật à?
Dialogue: 0,0:09:42.41,0:09:44.83,Default,,0000,0000,0000,,Tôi phải làm điều đó để hoàn thành nhiệm vụ.
Dialogue: 0,0:09:45.33,0:09:48.48,Default,,0000,0000,0000,,Có điều, cậu không phải là người sống.
Dialogue: 0,0:09:48.48,0:09:50.56,Default,,0000,0000,0000,,Cô cũng biết à?
Dialogue: 0,0:09:50.56,0:09:51.90,Default,,0000,0000,0000,,Vì tôi là Ninja.
Dialogue: 0,0:09:57.79,0:10:00.51,Default,,0000,0000,0000,,Tôi sẽ xẻ cậu thành nhiều mảnh cho đến khi\N không đánh lại nổi.
Dialogue: 0,0:10:00.51,0:10:03.08,Default,,0000,0000,0000,,Zombie cũng biết đau đấy nhé.
Dialogue: 0,0:10:04.60,0:10:05.79,Default,,0000,0000,0000,,Vậy cậu sẽ đầu hàng?
Dialogue: 0,0:10:06.48,0:10:09.40,Default,,0000,0000,0000,,Nhưng Eu đã bảo tôi đuổi cô đi rồi.
Dialogue: 0,0:10:09.40,0:10:11.87,Default,,0000,0000,0000,,Vậy thì... bắt đầu thôi!
Dialogue: 0,0:10:22.71,0:10:25.31,Default,,0000,0000,0000,,Tôi thích bí kiếm chiêu Tsubame gaeshi.
Dialogue: 0,0:10:25.85,0:10:28.12,Default,,0000,0000,0000,,Tôi thuần thục bí kiếm chiêu Tsubame gaeshi.
Dialogue: 0,0:10:28.64,0:10:29.44,Default,,0000,0000,0000,,Thú vui của tôi...
Dialogue: 0,0:10:33.77,0:10:36.07,Default,,0000,0000,0000,,là bí kiếm chiêu Tsubame gaeshi.
Dialogue: 0,0:10:36.49,0:10:37.44,Default,,0000,0000,0000,,Mạnh khiếp!
Dialogue: 0,0:10:38.23,0:10:41.52,Default,,0000,0000,0000,,Chỉ vậy mà cũng dám tự xưng là nô bộc \Ncủa Hellscythe-dono ư?
Dialogue: 0,0:10:41.52,0:10:43.56,Default,,0000,0000,0000,,Thật nực cười đấy.
Dialogue: 0,0:10:43.56,0:10:45.60,Default,,0000,0000,0000,,Đồ rác rưởi.
Dialogue: 0,0:11:04.00,0:11:06.72,Default,,0000,0000,0000,,Mình khinh suất rồi. Cô ta mạnh quá.
Dialogue: 0,0:11:16.92,0:11:18.94,Default,,0000,0000,0000,,Bí kiếm chiêu Tsubame gaeshi...
Dialogue: 0,0:11:18.94,0:11:21.22,Default,,0000,0000,0000,,Chỉ né thôi đã đủ mệt rồi...
Dialogue: 0,0:11:25.67,0:11:26.57,Default,,0000,0000,0000,,Chịu chết đi!
Dialogue: 0,0:11:32.02,0:11:33.04,Default,,0000,0000,0000,,Cái gì?
Dialogue: 0,0:11:33.37,0:11:35.35,Default,,0000,0000,0000,,200%...
Dialogue: 0,0:11:37.77,0:11:41.58,Default,,0000,0000,0000,,Thế này thì cô không dùng được bí kiếm chiêu \NTsubame gaeshi được nữa rồi nhỉ?
Dialogue: 0,0:11:43.96,0:11:45.27,Default,,0000,0000,0000,,Ngươi...
Dialogue: 0,0:11:45.27,0:11:48.92,Default,,0000,0000,0000,,Hãy đỡ... 250%!
Dialogue: 0,0:11:50.19,0:11:51.73,Default,,0000,0000,0000,,Ui da...
Dialogue: 0,0:11:55.79,0:11:58.26,Default,,0000,0000,0000,,Bí kiếm chiêu Tsubame gaeshi!
Dialogue: 0,0:11:59.69,0:12:00.80,Default,,0000,0000,0000,,Bát trảm!
Dialogue: 0,0:12:08.17,0:12:08.98,Default,,0000,0000,0000,,Cái gì?
Dialogue: 0,0:12:13.45,0:12:16.67,Default,,0000,0000,0000,,Tôi là một zombie đấy.
Dialogue: 0,0:12:27.54,0:12:28.75,Default,,0000,0000,0000,,Tôi xin thua.
Dialogue: 0,0:12:29.08,0:12:32.76,Default,,0000,0000,0000,,Cậu quả không hổ danh là nô bộc\N của Hellscythe-dono.
Dialogue: 0,0:12:33.50,0:12:34.53,Default,,0000,0000,0000,,Vậy...
Dialogue: 0,0:12:35.04,0:12:38.38,Default,,0000,0000,0000,,Phải. Tôi sẽ về nhà. { tôi sẽ cho cậu về nhà?}
Dialogue: 0,0:12:38.90,0:12:40.60,Default,,0000,0000,0000,,Tốt bụng nhờ?
Dialogue: 0,0:12:40.60,0:12:42.91,Default,,0000,0000,0000,,Đó là lòng tự tôn của một Ninja hút máu.
Dialogue: 0,0:12:43.19,0:12:44.42,Default,,0000,0000,0000,,Cáo biệt.
Dialogue: 0,0:12:45.95,0:12:48.05,Default,,0000,0000,0000,,Ninja hút máu Seraphim...
Dialogue: 0,0:12:48.05,0:12:49.91,Default,,0000,0000,0000,,Đúng là một đối thủ đáng nể.
Dialogue: 0,0:12:50.30,0:12:52.56,Default,,0000,0000,0000,,Nếu so tài lần nữa, chẳng rõ mình \Ncòn thắng được không.
Dialogue: 0,0:12:54.13,0:12:55.33,Default,,0000,0000,0000,,Về nhà rồi.
Dialogue: 0,0:12:57.46,0:12:59.71,Default,,0000,0000,0000,,Tại sao cô vẫn còn ở đây?
Dialogue: 0,0:13:00.20,0:13:02.70,Default,,0000,0000,0000,,Cứ tưởng cô về nhà rồi chứ.
Dialogue: 0,0:13:02.70,0:13:04.74,Default,,0000,0000,0000,,Tôi không hề nói nhà tôi.
Dialogue: 0,0:13:04.74,0:13:06.60,Default,,0000,0000,0000,,À, hiểu rồi.
Dialogue: 0,0:13:06.60,0:13:08.16,Default,,0000,0000,0000,,Vậy tức là cô về nhà tôi.
Dialogue: 0,0:13:08.16,0:13:09.75,Default,,0000,0000,0000,,Ê! Cô tính ở lại đây luôn à?!
Dialogue: 0,0:13:09.75,0:13:11.44,Default,,0000,0000,0000,,Cô thua cuộc rồi mà!
Dialogue: 0,0:13:12.04,0:13:13.37,Default,,0000,0000,0000,,Thế thì sao?
Dialogue: 0,0:13:13.37,0:13:16.48,Default,,0000,0000,0000,,Lòng tự tôn của Ninja hút máu đâu mất rồi?!
Dialogue: 0,0:13:17.07,0:13:20.49,Default,,0000,0000,0000,,Theo đuổi nhiệm vụ bằng mọi giá chính là\N lòng tự tôn của một Ninja.
Dialogue: 0,0:13:23.14,0:13:24.86,Default,,0000,0000,0000,,Tôi cũng muốn biết đây.
Dialogue: 0,0:13:26.04,0:13:27.82,Default,,0000,0000,0000,,Xem ra không còn cách nào khác.
Dialogue: 0,0:13:28.60,0:13:32.00,Default,,0000,0000,0000,,Tôi sẽ làm nô bộc của tên đàn ông khó ưa này.
Dialogue: 0,0:13:32.00,0:13:34.50,Default,,0000,0000,0000,,Hellscythe-dono, xin hãy cho phép tôi ở bên cô.
Dialogue: 0,0:13:32.52,0:13:33.93,Alternative,,0000,0000,0000,,"Khó ưa?"
Dialogue: 0,0:13:37.73,0:13:39.62,Default,,0000,0000,0000,,Cô làm nô bộc của tôi á?
Dialogue: 0,0:13:39.62,0:13:43.09,Default,,0000,0000,0000,,Vậy thì phải nghe lời tôi chứ nhỉ?
Dialogue: 0,0:13:43.48,0:13:46.24,Default,,0000,0000,0000,,Chẳng hạn như đánh thức tôi mỗi sáng\N trong bộ đồ hầu gái.
Dialogue: 0,0:13:46.81,0:13:49.22,Default,,0000,0000,0000,,Sáng rồi đó, thưa chủ nhân.
Dialogue: 0,0:13:49.39,0:13:51.22,Default,,0000,0000,0000,,Và đi tắm thì...
Dialogue: 0,0:13:51.22,0:13:54.44,Default,,0000,0000,0000,,Lưng của chủ nhân lớn thật...
Dialogue: 0,0:13:54.44,0:13:55.35,Default,,0000,0000,0000,,...chẳng hạn.
Dialogue: 0,0:13:55.78,0:13:57.26,Default,,0000,0000,0000,,Nhưng trước tiên thì...
Dialogue: 0,0:13:57.71,0:14:00.27,Default,,0000,0000,0000,,Gọi anh zai là "Onii-chan" đi!
Dialogue: 0,0:14:00.27,0:14:02.19,Default,,0000,0000,0000,,Miễn đi, thấy mà gớm.
Dialogue: 0,0:14:02.19,0:14:05.98,Default,,0000,0000,0000,,Hể? Thế ít nhất cũng gọi là chủ nhân\N hay Master chứ?
Dialogue: 0,0:14:05.98,0:14:08.52,Default,,0000,0000,0000,,Miễn đi, đồ rác rưởi.
Dialogue: 0,0:14:08.52,0:14:10.54,Default,,0000,0000,0000,,Là ai mà kiêu dữ thế này?
Dialogue: 0,0:14:11.71,0:14:13.17,Default,,0000,0000,0000,,Ông là rác rưởi hả?
Dialogue: 0,0:14:13.17,0:14:14.32,Default,,0000,0000,0000,,Không phải!
Dialogue: 0,0:14:14.32,0:14:18.79,Default,,0000,0000,0000,,Đầu tiên là ma trang thiếu nữ, bây giờ là \N Ninja hút máu à?
Dialogue: 0,0:14:30.01,0:14:32.64,Default,,0000,0000,0000,,Đúng là chẳng bao giờ hết chuyện.
Dialogue: 0,0:14:35.40,0:14:36.17,Default,,0000,0000,0000,,Xin lỗi.
Dialogue: 0,0:14:37.87,0:14:41.14,Default,,0000,0000,0000,,Hellscythe-dono đã khép cửa trái tim.
Dialogue: 0,0:14:41.63,0:14:44.15,Default,,0000,0000,0000,,Cô vừa mới gặp thì hiểu cái gì cơ chứ?
Dialogue: 0,0:14:44.47,0:14:48.46,Default,,0000,0000,0000,,Tôi hiểu rõ tâm tư con gái hơn là tên đàn ông \Nđần độn nào đó.
Dialogue: 0,0:14:49.00,0:14:51.51,Default,,0000,0000,0000,,Eu từ trước đến giờ vốn là như thế đấy.
Dialogue: 0,0:14:51.51,0:14:54.94,Default,,0000,0000,0000,,Dám chắc không? Nhỡ cô ấy có lý do nào đó thì sao?
Dialogue: 0,0:14:56.80,0:15:02.05,Default,,0000,0000,0000,,Có vẻ như cô ấy sẽ không chấp nhận \Nlời thỉnh cầu của tôi.
Dialogue: 0,0:15:02.69,0:15:04.77,Default,,0000,0000,0000,,Tên rác rưởi, xin hãy giúp tôi làm gì đó.
Dialogue: 0,0:15:10.39,0:15:12.95,Default,,0000,0000,0000,,Tâm tư của Eu à?
Dialogue: 0,0:15:19.03,0:15:20.75,Default,,0000,0000,0000,,Buổi tối cách đây một tháng...
Dialogue: 0,0:15:21.91,0:15:28.71,Default,,0000,0000,0000,,Một cô gái với mái tóc bạc khoác trên người bộ giáp\N đã thu hút tôi.
Dialogue: 0,0:15:38.57,0:15:41.65,Default,,0000,0000,0000,,Xin lỗi, nhưng bạn tin là có UFO không?
Dialogue: 0,0:15:43.65,0:15:45.01,Default,,0000,0000,0000,,Thôi toi rồi!
Dialogue: 0,0:15:45.01,0:15:49.34,Default,,0000,0000,0000,,Cơ hội làm quen duy nhất trong đời mình đi tong rồi!
Dialogue: 0,0:15:49.60,0:15:51.80,Default,,0000,0000,0000,,Một bầu không khí thật khó xử...
Dialogue: 0,0:15:51.80,0:15:52.76,Default,,0000,0000,0000,,Làm sao đây?
Dialogue: 0,0:15:52.76,0:15:54.97,Default,,0000,0000,0000,,Xem nào... Break dance nhỉ? Tuy hơi cổ...
Dialogue: 0,0:15:54.97,0:15:57.40,Default,,0000,0000,0000,,Hey, yo! Yo, yo, yo!
Dialogue: 0,0:15:57.40,0:15:58.85,Default,,0000,0000,0000,,"Check it out, man!"
Dialogue: 0,0:15:58.85,0:16:01.07,Default,,0000,0000,0000,,Con tim thơ ngây này... Đó chính là tình yêu!
Dialogue: 0,0:16:01.07,0:16:03.64,Default,,0000,0000,0000,,Đôi mắt em làm tôi ngất ngây!
Dialogue: 0,0:16:03.64,0:16:05.56,Default,,0000,0000,0000,,Trái tim tôi biến thành...
Dialogue: 0,0:16:08.44,0:16:10.27,Default,,0000,0000,0000,,Thôi, xong thật rồi...
Dialogue: 0,0:16:10.27,0:16:14.95,Default,,0000,0000,0000,,Cái ý tưởng mình có thể bắt chuyện với con gái\N đúng là sai lầm!{\fad(0,800)}
Dialogue: 0,0:16:25.33,0:16:26.80,Default,,0000,0000,0000,,Cái gì thế này?
Dialogue: 0,0:16:34.23,0:16:36.07,Default,,0000,0000,0000,,Cậu thấy tôi là người thế nào?
Dialogue: 0,0:16:54.81,0:16:55.90,Default,,0000,0000,0000,,Đúng là vậy rồi.
Dialogue: 0,0:17:01.41,0:17:05.37,Default,,0000,0000,0000,,Rốt cuộc, cô ấy chẳng nói một lời nào...
Dialogue: 0,0:17:05.37,0:17:07.42,Default,,0000,0000,0000,,Nhưng bàn tay phải của cô ấy\Ncứ như biết nói.
Dialogue: 0,0:17:08.30,0:17:12.42,Default,,0000,0000,0000,,Mình chưa bao giờ nghĩ là nói chuyện với\N một cô gái dễ thương lại vui đến thế.
Dialogue: 0,0:17:13.01,0:17:17.43,Default,,0000,0000,0000,,Mình... đã học được niềm vui ấy khi gặp Eu.
Dialogue: 0,0:17:22.60,0:17:23.59,Default,,0000,0000,0000,,Chào nhé.
Dialogue: 0,0:17:23.59,0:17:26.95,Default,,0000,0000,0000,,Ở lại đây một mình vào đêm khuya \Nthì cẩn thận bị tán tỉnh đấy.
Dialogue: 0,0:17:26.95,0:17:27.89,Default,,0000,0000,0000,,Tạm biệt.
Dialogue: 0,0:17:38.37,0:17:39.73,Default,,0000,0000,0000,,Tuyệt ghê.
Dialogue: 0,0:17:39.73,0:17:42.02,Default,,0000,0000,0000,,Mình đã nói chuyện một cô gái không quen.
Dialogue: 0,0:17:42.02,0:17:43.04,Default,,0000,0000,0000,,Tuyệt ghê.
Dialogue: 0,0:17:46.83,0:17:47.62,Default,,0000,0000,0000,,Máu?
Dialogue: 0,0:17:48.21,0:17:48.89,Note,,0000,0000,0000,,"Cuộc điều tra rơi vào ngõ cụt"
Dialogue: 0,0:17:48.21,0:17:48.89,Note,,0000,0000,0000,,"Vẫn chưa tìm ra kẻ giết người hàng loạt"
Dialogue: 0,0:17:48.89,0:17:50.14,Note,,0000,0000,0000,,"Kẻ giết người hàng loạt"
Dialogue: 0,0:17:48.98,0:17:50.07,Default,,0000,0000,0000,,Lẽ nào là...
Dialogue: 0,0:17:51.43,0:17:52.56,Default,,0000,0000,0000,,Gọi cứu thương thôi!
Dialogue: 0,0:17:52.56,0:17:53.83,Default,,0000,0000,0000,,Không, cảnh sát chứ!
Dialogue: 0,0:17:53.83,0:17:54.65,Default,,0000,0000,0000,,Cứu tôi với!
Dialogue: 0,0:17:55.80,0:17:57.75,Default,,0000,0000,0000,,Làm sao đây? Nhưng mà...
Dialogue: 0,0:18:03.26,0:18:04.98,Default,,0000,0000,0000,,Mình đang làm cái quái gì thế này?
Dialogue: 0,0:18:05.46,0:18:07.43,Default,,0000,0000,0000,,Mình đâu thể nào cứu cô ấy.
Dialogue: 0,0:18:07.43,0:18:09.83,Default,,0000,0000,0000,,Lỡ gặp tên hung thủ thì mình \Nphải làm gì chứ?
Dialogue: 0,0:18:12.48,0:18:15.43,Default,,0000,0000,0000,,Chết tiệt. Cái gì thế này?
Dialogue: 0,0:18:15.43,0:18:16.99,Default,,0000,0000,0000,,Có vẻ không hay rồi.
Dialogue: 0,0:18:17.33,0:18:19.38,Default,,0000,0000,0000,,Tiếng la phát ra từ lầu hai phải không nhỉ...
Dialogue: 0,0:18:25.65,0:18:29.59,Default,,0000,0000,0000,,Cơ thể mình... không cử động được...
Dialogue: 0,0:18:35.85,0:18:39.26,Default,,0000,0000,0000,,Mình ra vẻ anh hùng thế này để làm gì cơ chứ?
Dialogue: 0,0:18:40.77,0:18:43.29,Default,,0000,0000,0000,,Khó thở quá...
Dialogue: 0,0:19:02.03,0:19:02.94,Default,,0000,0000,0000,,Cậu...
Dialogue: 0,0:19:05.41,0:19:07.02,Default,,0000,0000,0000,,Ủa? Tôi còn sống à?
Dialogue: 0,0:19:09.98,0:19:12.41,Default,,0000,0000,0000,,Cậu là thần chết ư?
Dialogue: 0,0:19:18.73,0:19:20.79,Default,,0000,0000,0000,,Thật ra cậu là gì?
Dialogue: 0,0:19:25.89,0:19:27.56,Default,,0000,0000,0000,,Thầy gọi hồn?
Dialogue: 0,0:19:27.96,0:19:29.04,Default,,0000,0000,0000,,Đợt một chút.
Dialogue: 0,0:19:29.04,0:19:31.50,Default,,0000,0000,0000,,Chuyện này là thế nào?!
Dialogue: 0,0:19:40.52,0:19:43.64,Default,,0000,0000,0000,,Và thế là tôi đã trở thành một Zombie.
Dialogue: 0,0:19:52.78,0:19:56.83,Default,,0000,0000,0000,,Ưm, có gọi mình là nô bộc của người gọi hồn\N thì cũng được...
Dialogue: 0,0:19:56.83,0:20:00.75,Default,,0000,0000,0000,,Nhưng mà Eu thật ra nghĩ sao về mình nhỉ?
Dialogue: 0,0:20:02.41,0:20:03.75,Default,,0000,0000,0000,,Ayumu, chén nữa!
Dialogue: 0,0:20:04.13,0:20:06.09,Default,,0000,0000,0000,,Một chén thật là đầy nhé.
Dialogue: 0,0:20:06.81,0:20:08.08,Default,,0000,0000,0000,,Rồi, rồi.
Dialogue: 0,0:20:10.91,0:20:12.81,Default,,0000,0000,0000,,Cho tôi thêm súp Miso.
Dialogue: 0,0:20:13.51,0:20:14.37,Default,,0000,0000,0000,,Rồi, rồi.
Dialogue: 0,0:20:15.10,0:20:18.45,Default,,0000,0000,0000,,Sera nè, cô tự nhiên như ở nhà rồi đấy.
Dialogue: 0,0:20:18.87,0:20:21.11,Default,,0000,0000,0000,,Tôi đã chuẩn bị cho một cuộc chiến dài.
Dialogue: 0,0:20:21.51,0:20:22.72,Default,,0000,0000,0000,,Nói vậy là sao chứ?!
Dialogue: 0,0:20:22.72,0:20:27.50,Default,,0000,0000,0000,,Cuộc chiến làng ninja đã bế tắc cả trăm năm rồi.
Dialogue: 0,0:20:27.50,0:20:28.57,Default,,0000,0000,0000,,Hả?
Dialogue: 0,0:20:28.57,0:20:31.80,Default,,0000,0000,0000,,Tôi không mong sẽ có gì tiến triển trong vài ngày.
Dialogue: 0,0:20:31.80,0:20:34.21,Default,,0000,0000,0000,,Nghe sao thấy khó khăn ghê á.
Dialogue: 0,0:20:34.21,0:20:37.54,Default,,0000,0000,0000,,Tôi không cần zombie thông cảm, rác rưởi.
Dialogue: 0,0:20:37.54,0:20:39.12,Default,,0000,0000,0000,,Người gì mà lẫm liệt thế này?!
Dialogue: 0,0:20:40.42,0:20:41.91,Default,,0000,0000,0000,,Ayumu, đây.
Dialogue: 0,0:20:41.91,0:20:43.03,Default,,0000,0000,0000,,Cơm trưa bữa nay đó.
Dialogue: 0,0:20:43.71,0:20:46.31,Default,,0000,0000,0000,,Đừng nói là lại toàn trứng chiên nhé.
Dialogue: 0,0:20:46.31,0:20:48.26,Default,,0000,0000,0000,,Đừng có mà đùa như thế chứ.
Dialogue: 0,0:20:48.69,0:20:52.47,Default,,0000,0000,0000,,Cơm của bà thì còn có gì khác \Nđể mà lo đây?
Dialogue: 0,0:20:52.47,0:20:53.52,Default,,0000,0000,0000,,Mà tôi kệ.
Dialogue: 0,0:20:53.52,0:20:55.72,Default,,0000,0000,0000,,Trứng chiên của Haruna ngon lắm mà.
Dialogue: 0,0:20:55.72,0:20:57.39,Default,,0000,0000,0000,,Dĩ nhiên là ngon rồi.
Dialogue: 0,0:20:57.96,0:20:59.93,Default,,0000,0000,0000,,Ông nghĩ tui là ai chứ hả?
Dialogue: 0,0:21:01.86,0:21:03.47,Default,,0000,0000,0000,,Đừng có cười, thấy gớm quá đó.
Dialogue: 0,0:21:03.47,0:21:05.21,Default,,0000,0000,0000,,Phải, thấy gớm.
Dialogue: 0,0:21:05.21,0:21:07.03,Default,,0000,0000,0000,,Mấy cô đấy nhé...
Dialogue: 0,0:21:07.32,0:21:11.94,Default,,0000,0000,0000,,Nhưng mà Haruna nè, ít ra cũng phải xới thêm\N cơm vào chứ?
Dialogue: 0,0:21:11.94,0:21:13.71,Default,,0000,0000,0000,,Thì tự mình mà bới vào chứ.
Dialogue: 0,0:21:13.71,0:21:15.01,Default,,0000,0000,0000,,Chết đi, đồ ngốc!
Dialogue: 0,0:21:24.21,0:21:25.66,Default,,0000,0000,0000,,Gì vậy chứ?
Dialogue: 0,0:21:26.02,0:21:29.24,Default,,0000,0000,0000,,Eu, không phải Haruna nói thật đâu.
Dialogue: 0,0:21:29.72,0:21:31.05,Default,,0000,0000,0000,,Đúng vậy nhỉ?
Dialogue: 0,0:21:31.37,0:21:32.37,Default,,0000,0000,0000,,Im đi!
Dialogue: 0,0:21:32.37,0:21:34.74,Default,,0000,0000,0000,,Đừng có tự tiện chạm vào tui, Ayumu ngốc!
Dialogue: 0,0:21:34.74,0:21:36.85,Default,,0000,0000,0000,,Chết đi, chết đi, chết luôn đi!
Dialogue: 0,0:21:47.91,0:21:49.36,Default,,0000,0000,0000,,Cô làm gì vậy?
Dialogue: 0,0:21:58.93,0:21:59.81,Default,,0000,0000,0000,,Eu...
Dialogue: 0,0:22:08.18,0:22:09.13,Default,,0000,0000,0000,,Ăn đi.
Dialogue: 0,0:22:15.18,0:22:16.58,Default,,0000,0000,0000,,Phải ăn đấy nhé!
Dialogue: 0,0:22:31.02,0:22:33.47,Default,,0000,0000,0000,,Gì chứ, hôm nay lại mưa à?
Dialogue: 0,0:22:38.34,0:22:42.47,Default,,0000,0000,0000,,Cứ như là ông trời đang khóc thay cho Eu vậy.
Dialogue: 0,0:22:50.85,0:22:53.12,Default,,0000,0000,0000,,Làm ơn nhanh lên, đồ rác rưởi.
Dialogue: 0,0:22:53.60,0:22:54.89,Default,,0000,0000,0000,,Làm mất hứng quá đấy.
Dialogue: 0,0:24:26.81,0:24:28.24,Default,,0000,0000,0000,,Chẳng phải cô xuất hiện hơi đột ngột quá sao?
Dialogue: 0,0:24:28.24,0:24:29.21,Default,,0000,0000,0000,,Tôi là ninja mà.
Dialogue: 0,0:24:29.21,0:24:31.17,Default,,0000,0000,0000,,Cô là ninja, nhưng tên cô là Seraphim.
Dialogue: 0,0:24:31.17,0:24:32.52,Default,,0000,0000,0000,,Chẳng phải là ở phương Tây sao?
Dialogue: 0,0:24:32.52,0:24:33.73,Default,,0000,0000,0000,,Tôi là ma hút máu đấy.
Dialogue: 0,0:24:33.73,0:24:34.57,Default,,0000,0000,0000,,Và vũ khí của cô là...
Dialogue: 0,0:24:34.57,0:24:37.71,Default,,0000,0000,0000,,Nói nhiều quá, cái đồ rác rưởi vô tích sự.
Dialogue: 0,0:24:37.71,0:24:40.44,Default,,0000,0000,0000,,Hay là tôi biến cậu thành Ninja hút máu luôn nhé?
