Dialogue: 0,0:00:00.00,0:00:02.13,Default,,0,0,0,,NĂM 3, LỚP B
Dialogue: 0,0:00:05.01,0:00:06.80,Default,,0,0,0,,Chào buổi sáng, Komura.
Dialogue: 0,0:00:07.38,0:00:09.09,Default,,0,0,0,,Chào buổi sáng, Mie.
Dialogue: 0,0:00:09.68,0:00:10.51,Default,,0,0,0,,Kính…
Dialogue: 0,0:00:11.55,0:00:14.60,Default,,0,0,0,,Chắc là lúc uống ca cao nóng kính bị mờ\Nnên mình tháo xuống.
Dialogue: 0,0:00:15.22,0:00:18.89,Default,,0,0,0,,Vậy hôm nay\Ncậu có muốn xem chung sách không?
Dialogue: 0,0:00:21.15,0:00:22.23,Default,,0,0,0,,Cảm ơn cậu.
Dialogue: 0,0:00:29.57,0:00:32.49,Default,,0,0,0,,{\i1}Có vẻ tâm trạng dạo này của Mie rất tốt.{\i0}
Dialogue: 0,0:00:33.37,0:00:36.33,Default,,0,0,0,,{\i1}Và kiểu tóc của cô ấy siêu dễ thương.{\i0}
Dialogue: 0,0:00:36.41,0:00:38.29,Default,,0,0,0,,{\i1}Dù không biết gọi là kiểu tóc gì.{\i0}
Dialogue: 0,0:00:46.42,0:00:48.88,Default,,0,0,0,,Sao… sao vậy?
Dialogue: 0,0:00:48.97,0:00:49.84,Default,,0,0,0,,Không có gì.
Dialogue: 0,0:00:49.93,0:00:51.68,Default,,0,0,0,,Mình chỉ muốn nhìn mặt cậu thôi.
Dialogue: 0,0:01:00.64,0:01:02.94,Default,,0,0,0,,{\i1}Thay vì nói là tâm trạng rất tốt,{\i0}
Dialogue: 0,0:01:03.02,0:01:05.98,Default,,0,0,0,,{\i1}thì đúng hơn là\Ndạo này cô ấy hành xử hơi kỳ lạ.{\i0}
Dialogue: 0,0:01:06.07,0:01:07.86,Default,,0,0,0,,{\i1}Cũng có thể bình thường cô ấy cũng vậy.{\i0}
Dialogue: 0,0:01:07.94,0:01:08.94,Default,,0,0,0,,Này, Komura.
Dialogue: 0,0:01:10.40,0:01:12.20,Default,,0,0,0,,Kìa… Someya.
Dialogue: 0,0:01:13.16,0:01:15.66,Default,,0,0,0,,Cậu với Mie vừa hôn nhau à?
Dialogue: 0,0:01:18.16,0:01:19.41,Default,,0,0,0,,Hôn nhau.
Dialogue: 0,0:02:56.55,0:02:58.85,Default,,0,0,0,,Cậu với Mie vừa hôn nhau à?
Dialogue: 0,0:03:00.64,0:03:01.47,Default,,0,0,0,,Hôn nhau.
Dialogue: 0,0:03:02.06,0:03:03.06,Default,,0,0,0,,Hả?
Dialogue: 0,0:03:12.36,0:03:15.57,Default,,0,0,0,,Đã bảo cậu rồi,\Nhai người họ chỉ kề mặt gần nhau thôi.
Dialogue: 0,0:03:16.11,0:03:19.87,Default,,0,0,0,,Chẳng phải cứ lúc Mie quên kính\Nlà lại như vậy sao?
Dialogue: 0,0:03:20.45,0:03:21.87,Default,,0,0,0,,Xin lỗi, Komura.
Dialogue: 0,0:03:23.00,0:03:24.75,Default,,0,0,0,,Vậy là không hôn nhau sao?
Dialogue: 0,0:03:24.83,0:03:26.75,Default,,0,0,0,,Không… không có.
Dialogue: 0,0:03:26.83,0:03:28.08,Default,,0,0,0,,Sao chứ?
Dialogue: 0,0:03:28.17,0:03:29.29,Default,,0,0,0,,Được rồi, đi thôi.
Dialogue: 0,0:03:29.38,0:03:32.76,Default,,0,0,0,,- Sao có thể làm vậy ở trường được.\N{\i1}- Mọi người thấy bọn mình vậy sao?{\i0}
Dialogue: 0,0:03:32.84,0:03:34.84,Default,,0,0,0,,Mình thấy họ có hôn mà.
Dialogue: 0,0:03:34.92,0:03:35.88,Default,,0,0,0,,Được rồi.
Dialogue: 0,0:03:36.76,0:03:38.64,Default,,0,0,0,,{\i1}Không… không được rồi.{\i0}
Dialogue: 0,0:03:38.72,0:03:41.51,Default,,0,0,0,,{\i1}Kiểu hiểu nhầm kỳ lạ này\Nsẽ khiến Mie gặp phiền phức.{\i0}
Dialogue: 0,0:03:54.61,0:03:56.40,Default,,0,0,0,,Lúc nãy là Someya phải không?
Dialogue: 0,0:03:58.91,0:04:01.03,Default,,0,0,0,,Cậu sao vậy? Sao cứ rên rỉ thế?
Dialogue: 0,0:04:01.62,0:04:03.54,Default,,0,0,0,,- Còn nữa…\N- Cho mình xem bài tập nhé?
Dialogue: 0,0:04:03.62,0:04:05.45,Default,,0,0,0,,- Rốt cuộc là…\N- Được.
Dialogue: 0,0:04:06.08,0:04:08.04,Default,,0,0,0,,Cái đó…
Dialogue: 0,0:04:08.71,0:04:10.83,Default,,0,0,0,,Xin… xin lỗi cậu.
Dialogue: 0,0:04:10.92,0:04:12.54,Default,,0,0,0,,Hôm nay hình như mình bị cảm.
Dialogue: 0,0:04:12.63,0:04:15.05,Default,,0,0,0,,Lây sang cậu thì nguy.
Dialogue: 0,0:04:20.18,0:04:21.18,Default,,0,0,0,,Tìm thấy rồi.
Dialogue: 0,0:04:21.26,0:04:22.68,Default,,0,0,0,,Cảm… Cảm ơn cậu.
Dialogue: 0,0:04:23.26,0:04:25.60,Default,,0,0,0,,{\i1}Khẩu trang trong cặp sách của Mie…{\i0}
Dialogue: 0,0:04:26.89,0:04:29.56,Default,,0,0,0,,{\i1}Mình… mình nói dối cô ấy rồi.{\i0}
Dialogue: 0,0:04:29.65,0:04:32.19,Default,,0,0,0,,{\i1}Nhưng mình phải\Ngiải thích sao với Mie đây?{\i0}
Dialogue: 0,0:04:33.32,0:04:35.44,Default,,0,0,0,,Kìa…
Dialogue: 0,0:04:35.53,0:04:38.20,Default,,0,0,0,,Thế này vẫn có khả năng lây sang cậu đó.
Dialogue: 0,0:04:39.78,0:04:40.74,Default,,0,0,0,,{\i1}Thiếu tự nhiên quá.{\i0}
Dialogue: 0,0:04:42.66,0:04:45.08,Default,,0,0,0,,LỚP ÂM NHẠC
Dialogue: 0,0:04:45.16,0:04:46.70,Default,,0,0,0,,- Nhìn chằm chằm.\N{\i1}- Xin lỗi, Mie.{\i0}
Dialogue: 0,0:04:46.79,0:04:49.16,Default,,0,0,0,,{\i1}Không phải mình đang né tránh cậu đâu.{\i0}
Dialogue: 0,0:04:49.67,0:04:52.54,Default,,0,0,0,,{\i1}- Sẽ bị người khác hiểu nhầm đó.\N- Nhìn chằm chằm.{\i0}
Dialogue: 0,0:04:53.88,0:04:55.71,Default,,0,0,0,,{\i1}- Đấy. Cậu ấy cứ nhìn.\N- Nhìn chằm chằm.{\i0}
Dialogue: 0,0:04:55.80,0:04:57.30,Default,,0,0,0,,{\i1}- Nhìn mãi!\N- Nhìn chằm chằm!{\i0}
Dialogue: 0,0:04:57.38,0:05:00.34,Default,,0,0,0,,- Đừng vậy.\N{\i1}- Cậu ấy nhìn chằm chằm nãy giờ!{\i0}
Dialogue: 0,0:05:00.93,0:05:04.85,Default,,0,0,0,,{\i1}Mà phải,\Nsao Mie lại muốn nhìn mặt mình vậy?{\i0}
Dialogue: 0,0:05:09.89,0:05:14.94,Default,,0,0,0,,Này, đây là lần đầu tiên mình được tận mắt\Nchứng kiến cảnh tượng yêu đương đó.
Dialogue: 0,0:05:15.02,0:05:17.23,Default,,0,0,0,,Phấn khích quá đi.
Dialogue: 0,0:05:17.32,0:05:18.40,Default,,0,0,0,,Chuyện đó…
Dialogue: 0,0:05:18.49,0:05:20.24,Default,,0,0,0,,Hai cậu thật sự không hôn sao?
Dialogue: 0,0:05:20.90,0:05:22.20,Default,,0,0,0,,Không có.
Dialogue: 0,0:05:22.28,0:05:25.24,Default,,0,0,0,,Thật hay giả vậy?\NMình sẽ không nói ra đâu.
Dialogue: 0,0:05:28.41,0:05:31.25,Default,,0,0,0,,Mie, nhìn đông nhìn tây\Nlà sẽ nguy hiểm đó.
Dialogue: 0,0:05:34.34,0:05:35.17,Default,,0,0,0,,GIẪM
Dialogue: 0,0:05:35.25,0:05:36.21,Default,,0,0,0,,Mình nói rồi.
Dialogue: 0,0:05:39.01,0:05:40.51,Default,,0,0,0,,Mie!
Dialogue: 0,0:05:41.43,0:05:43.34,Default,,0,0,0,,Mie, cậu không sao chứ?
Dialogue: 0,0:05:43.43,0:05:45.51,Default,,0,0,0,,- Không sao chứ?\N- Mình… mình không sao.
Dialogue: 0,0:05:45.60,0:05:47.51,Default,,0,0,0,,Chỉ hơi choáng thôi.
Dialogue: 0,0:05:47.60,0:05:49.10,Default,,0,0,0,,Vậy là bình thường.
Dialogue: 0,0:05:49.18,0:05:50.02,Default,,0,0,0,,PHÒNG Y TẾ
Dialogue: 0,0:05:50.10,0:05:52.19,Default,,0,0,0,,Dùng đá này chườm trước đi.
Dialogue: 0,0:05:52.69,0:05:54.94,Default,,0,0,0,,Nghỉ một chút là phải quay về lớp đó.
Dialogue: 0,0:05:56.73,0:05:58.11,Default,,0,0,0,,Túi giữ lạnh có thể đem theo.
Dialogue: 0,0:05:58.69,0:05:59.57,Default,,0,0,0,,Em biết rồi.
Dialogue: 0,0:06:00.74,0:06:01.90,Default,,0,0,0,,Cảm ơn cậu.
Dialogue: 0,0:06:02.82,0:06:04.41,Default,,0,0,0,,Còn đi cùng mình tới đây.
Dialogue: 0,0:06:04.99,0:06:06.74,Default,,0,0,0,,Không… không có gì.
Dialogue: 0,0:06:07.62,0:06:09.70,Default,,0,0,0,,{\i1}Mình cùng cô ấy tới đây\Nthật sự không sao chứ?{\i0}
Dialogue: 0,0:06:10.87,0:06:11.83,Default,,0,0,0,,Nhờ cậu nhé.
Dialogue: 0,0:06:13.29,0:06:15.83,Default,,0,0,0,,{\i1}Mong là không gây ra hiểu lầm mới nữa.{\i0}
Dialogue: 0,0:06:17.04,0:06:22.97,Default,,0,0,0,,{\i1}Hôn Mie…{\i0}
Dialogue: 0,0:06:23.63,0:06:25.97,Default,,0,0,0,,{\i1}Quên đi đã, phải quên chuyện này đi đã.{\i0}
Dialogue: 0,0:06:29.97,0:06:32.35,Default,,0,0,0,,Có… có phải đến lúc quay về rồi không?
Dialogue: 0,0:06:35.81,0:06:38.61,Default,,0,0,0,,Komura, cuối tuần cậu hay làm gì?
Dialogue: 0,0:06:40.19,0:06:42.15,Default,,0,0,0,,Nếu… nếu cậu hỏi mình làm gì,
Dialogue: 0,0:06:42.82,0:06:44.95,Default,,0,0,0,,thì mình hay làm việc nhà hoặc đọc sách,
Dialogue: 0,0:06:45.03,0:06:46.37,Default,,0,0,0,,hoặc là chơi game.
Dialogue: 0,0:06:46.45,0:06:49.24,Default,,0,0,0,,Cậu thích trò chơi bằng xu đúng không?
Dialogue: 0,0:06:49.33,0:06:52.33,Default,,0,0,0,,Ừ, mình cũng hay đến khu trò chơi.
Dialogue: 0,0:06:53.16,0:06:59.84,Default,,0,0,0,,Thích thật. Bố bảo nếu không cho\Nbố đi cùng thì sẽ không cho mình đến đó.
Dialogue: 0,0:06:59.92,0:07:02.21,Default,,0,0,0,,Nhưng mình vẫn lén đến đó.
Dialogue: 0,0:07:02.30,0:07:03.84,Default,,0,0,0,,{\i1}Trước đây mình từng nghĩ rồi,{\i0}
Dialogue: 0,0:07:03.92,0:07:06.84,Default,,0,0,0,,{\i1}Mie chắc là tiểu thư lá ngọc cành vàng.{\i0}
Dialogue: 0,0:07:07.59,0:07:08.43,Default,,0,0,0,,Này.
Dialogue: 0,0:07:08.93,0:07:12.10,Default,,0,0,0,,Sao… đột nhiên cậu lại hỏi chuyện này?
Dialogue: 0,0:07:13.18,0:07:15.10,Default,,0,0,0,,Mình chỉ muốn nói chuyện với cậu thôi.
Dialogue: 0,0:07:17.69,0:07:21.28,Default,,0,0,0,,Hôm nay chưa được nói chuyện với cậu.
Dialogue: 0,0:07:21.36,0:07:25.11,Default,,0,0,0,,Komura hôm nay\Ncứ nói chuyện với Someya suốt.
Dialogue: 0,0:07:31.83,0:07:33.20,Default,,0,0,0,,Không sao.
Dialogue: 0,0:07:34.71,0:07:35.87,Default,,0,0,0,,{\i1}Đúng là…{\i0}
Dialogue: 0,0:07:36.46,0:07:38.50,Default,,0,0,0,,{\i1}Có lẽ vì mình cứ để tâm đến chuyện Someya{\i0}
Dialogue: 0,0:07:38.58,0:07:41.17,Default,,0,0,0,,{\i1}mà đã lạnh nhạt với Mie.{\i0}
Dialogue: 0,0:07:41.75,0:07:44.67,Default,,0,0,0,,{\i1}Rõ ràng hôm nay cô ấy quên đeo kính,\Nđang gặp phiền phức vậy mà.{\i0}
Dialogue: 0,0:07:47.55,0:07:49.76,Default,,0,0,0,,Này, Komura.
Dialogue: 0,0:07:52.10,0:07:54.10,Default,,0,0,0,,Những ngày mình quên đeo kính,
Dialogue: 0,0:07:54.18,0:07:55.98,Default,,0,0,0,,mỗi ngày một lần,
Dialogue: 0,0:07:56.06,0:07:59.31,Default,,0,0,0,,mình có thể ngắm Komura ở gần được không?
Dialogue: 0,0:08:01.11,0:08:03.15,Default,,0,0,0,,Mình đã nghĩ rất lâu.
Dialogue: 0,0:08:03.69,0:08:06.20,Default,,0,0,0,,Và mình vẫn thấy\Nđúng là mỗi ngày mình cần có một lần…
Dialogue: 0,0:08:08.41,0:08:11.33,Default,,0,0,0,,được ngắm mặt của Komura.
Dialogue: 0,0:08:11.41,0:08:16.58,Default,,0,0,0,,{\i1}Muốn ngắm mặt của Komura…{\i0}
Dialogue: 0,0:08:16.66,0:08:19.33,Default,,0,0,0,,{\i1}Tại… tại sao lại…{\i0}
Dialogue: 0,0:08:20.25,0:08:21.42,Default,,0,0,0,,{\i1}Không, đúng mà.{\i0}
Dialogue: 0,0:08:21.50,0:08:24.30,Default,,0,0,0,,{\i1}Thay vì không nhìn thấy\Nthì nhìn thấy mặt mình sẽ yên tâm hơn.{\i0}
Dialogue: 0,0:08:27.84,0:08:31.55,Default,,0,0,0,,{\i1}Là mình… đã khiến Mie cảm thấy bất an rồi.{\i0}
Dialogue: 0,0:08:33.43,0:08:34.81,Default,,0,0,0,,Cậu không muốn cũng không sao.
Dialogue: 0,0:08:34.89,0:08:37.06,Default,,0,0,0,,Không… không phải mình không muốn.
Dialogue: 0,0:08:42.15,0:08:44.44,Default,,0,0,0,,Mình… muốn mà.
Dialogue: 0,0:08:45.65,0:08:47.40,Default,,0,0,0,,Nếu Mie muốn ngắm,
Dialogue: 0,0:08:47.49,0:08:48.36,Default,,0,0,0,,thì…
Dialogue: 0,0:08:48.95,0:08:51.82,Default,,0,0,0,,cậu muốn ngắm bao lâu cũng được.
Dialogue: 0,0:08:54.91,0:08:57.25,Default,,0,0,0,,{\i1}Khoan, có phải\Nmình đã nói gì kỳ quặc không?{\i0}
Dialogue: 0,0:08:57.87,0:09:00.71,Default,,0,0,0,,Muốn… muốn ngắm bao lâu cũng được sao?
Dialogue: 0,0:09:07.09,0:09:09.34,Default,,0,0,0,,Nhưng mình sẽ không ngắm lâu vậy đâu.
Dialogue: 0,0:09:10.76,0:09:11.64,Default,,0,0,0,,Ừ.
Dialogue: 0,0:09:18.23,0:09:20.94,Default,,0,0,0,,{\i1}Mấy… mấy giây trôi qua rồi?{\i0}
Dialogue: 0,0:09:22.23,0:09:23.48,Default,,0,0,0,,{\i1}Hay là mấy phút?{\i0}
Dialogue: 0,0:09:24.11,0:09:26.15,Default,,0,0,0,,{\i1}Mình đổ nhiều mồ hôi quá.{\i0}
Dialogue: 0,0:09:26.94,0:09:30.40,Default,,0,0,0,,{\i1}Nhìn mặt mình thật sự có thể\Nkhiến cô ấy yên tâm sao?{\i0}
Dialogue: 0,0:09:39.66,0:09:41.12,Default,,0,0,0,,{\i1}Nhìn cô ấy vui vậy,{\i0}
Dialogue: 0,0:09:41.21,0:09:42.25,Default,,0,0,0,,{\i1}thôi kệ đi.{\i0}
Dialogue: 0,0:09:46.84,0:09:48.84,Default,,0,0,0,,- Mai gặp.\N- Trận lần trước quyết liệt quá.
Dialogue: 0,0:09:48.92,0:09:49.76,Default,,0,0,0,,Hẹn gặp lại.
Dialogue: 0,0:09:59.02,0:10:00.39,Default,,0,0,0,,Cảm ơn cậu giúp mình dọn dẹp.
Dialogue: 0,0:10:01.06,0:10:02.14,Default,,0,0,0,,Không có gì đâu.
Dialogue: 0,0:10:02.23,0:10:03.23,Default,,0,0,0,,Về thôi.
Dialogue: 0,0:10:05.11,0:10:06.61,Default,,0,0,0,,Chờ đã!
Dialogue: 0,0:10:07.27,0:10:08.53,Default,,0,0,0,,Giật cả mình.
Dialogue: 0,0:10:08.61,0:10:10.07,Default,,0,0,0,,Xin… xin lỗi.
Dialogue: 0,0:10:10.15,0:10:11.78,Default,,0,0,0,,Nhưng đây là tình huống khẩn cấp.
Dialogue: 0,0:10:11.86,0:10:15.07,Default,,0,0,0,,Tóc của cậu… bị kẹt rồi.
Dialogue: 0,0:10:17.91,0:10:20.62,Default,,0,0,0,,{\i1}Bộ tóc vừa đẹp\Nvừa dễ thương của Mie lại bị…{\i0}
Dialogue: 0,0:10:23.58,0:10:25.75,Default,,0,0,0,,Đừng như vậy! Dừng lại đi!
Dialogue: 0,0:10:25.83,0:10:27.50,Default,,0,0,0,,Hình như bị mắc vào rồi.
Dialogue: 0,0:10:28.09,0:10:29.55,Default,,0,0,0,,Cậu có đem kéo không?
Dialogue: 0,0:10:32.13,0:10:33.68,Default,,0,0,0,,Cậu… cậu định cắt luôn sao?
Dialogue: 0,0:10:35.09,0:10:35.97,Default,,0,0,0,,Cắt luôn sao?
Dialogue: 0,0:10:37.01,0:10:38.72,Default,,0,0,0,,Mình cũng nhìn không rõ.
Dialogue: 0,0:10:44.94,0:10:46.10,Default,,0,0,0,,Để mình thử.
Dialogue: 0,0:10:46.19,0:10:47.65,Default,,0,0,0,,Cậu định giúp mình cắt sao?
Dialogue: 0,0:11:01.33,0:11:03.83,Default,,0,0,0,,Cậu cứ thế cắt cũng được.
Dialogue: 0,0:11:04.67,0:11:06.25,Default,,0,0,0,,Sao có thể làm vậy?
Dialogue: 0,0:11:06.33,0:11:07.83,Default,,0,0,0,,{\i1}Phải cố hết sức…{\i0}
Dialogue: 0,0:11:07.92,0:11:10.46,Default,,0,0,0,,{\i1}Cố hết sức giảm thiểu thiệt hại.{\i0}
Dialogue: 0,0:11:10.55,0:11:11.76,Default,,0,0,0,,Ngày xưa,
Dialogue: 0,0:11:12.34,0:11:14.88,Default,,0,0,0,,tóc cứ dài ra là mình lại cắt.
Dialogue: 0,0:11:14.97,0:11:17.34,Default,,0,0,0,,Vì mọi người bảo để tóc dài đẹp\Nnên mình mới để.
Dialogue: 0,0:11:19.60,0:11:23.68,Default,,0,0,0,,Mọi người đều nói\Nthích bộ tóc dài của mình.
Dialogue: 0,0:11:26.44,0:11:28.77,Default,,0,0,0,,Komura thì sao? Cậu có thích không?
Dialogue: 0,0:11:38.66,0:11:41.41,Default,,0,0,0,,Xin… xin lỗi, cậu vừa nói gì vậy?
Dialogue: 0,0:11:44.33,0:11:45.41,Default,,0,0,0,,Tóc…
Dialogue: 0,0:11:45.50,0:11:47.46,Default,,0,0,0,,phải nâng niu mới được.
Dialogue: 0,0:11:51.67,0:11:53.59,Default,,0,0,0,,{\i1}Ừ.{\i0}
Dialogue: 0,0:12:20.78,0:12:22.74,Default,,0,0,0,,Chun buộc tóc rơi rồi.
Dialogue: 0,0:12:22.83,0:12:23.99,Default,,0,0,0,,Đâu mất rồi nhỉ?
Dialogue: 0,0:12:26.50,0:12:27.41,Default,,0,0,0,,Tìm thấy rồi.
Dialogue: 0,0:12:32.71,0:12:34.92,Default,,0,0,0,,Komura, cậu buộc tóc giúp mình được không?
Dialogue: 0,0:12:36.01,0:12:39.01,Default,,0,0,0,,Nhưng… mình chưa từng buộc tóc.
Dialogue: 0,0:12:39.09,0:12:41.26,Default,,0,0,0,,Chuyện gì cũng phải thử mới được.
Dialogue: 0,0:12:48.56,0:12:51.86,Default,,0,0,0,,{\i1}Dù mình thích nhất\Nphong cách suy nghĩ này của Mie…{\i0}
Dialogue: 0,0:13:02.03,0:13:03.95,Default,,0,0,0,,Đau thì phải nói nhé.
Dialogue: 0,0:13:05.29,0:13:06.83,Default,,0,0,0,,Đau… đau không?
Dialogue: 0,0:13:07.75,0:13:09.66,Default,,0,0,0,,Komura, cậu căng thẳng quá.
Dialogue: 0,0:13:09.75,0:13:11.12,Default,,0,0,0,,Nhưng…
Dialogue: 0,0:13:11.21,0:13:12.58,Default,,0,0,0,,Không sao đâu.
Dialogue: 0,0:13:13.63,0:13:16.30,Default,,0,0,0,,Bình thường Mie toàn tự buộc tóc sao?
Dialogue: 0,0:13:16.84,0:13:18.01,Default,,0,0,0,,Về cơ bản là vậy.
Dialogue: 0,0:13:18.09,0:13:21.09,Default,,0,0,0,,Mẹ cũng thường giúp mình buộc tóc.
Dialogue: 0,0:13:25.93,0:13:27.31,Default,,0,0,0,,Vậy được không?
Dialogue: 0,0:13:29.31,0:13:30.73,Default,,0,0,0,,Cậu buộc đẹp lắm.
Dialogue: 0,0:13:30.81,0:13:32.48,Default,,0,0,0,,Không dám.
Dialogue: 0,0:13:34.31,0:13:36.48,Default,,0,0,0,,Nếu ngày nào\Ncũng được thế này thì tốt quá.
Dialogue: 0,0:13:39.32,0:13:42.24,Default,,0,0,0,,Cậu… cậu bảo mình\Nmỗi sáng buộc tóc giúp cậu sao?
Dialogue: 0,0:13:43.03,0:13:43.87,Default,,0,0,0,,Ừ.
Dialogue: 0,0:13:43.95,0:13:45.95,Default,,0,0,0,,Nhưng… phải buộc ở trường sao?
Dialogue: 0,0:13:46.95,0:13:47.83,Default,,0,0,0,,Không phải.
Dialogue: 0,0:13:56.25,0:13:57.88,Default,,0,0,0,,Rồi sẽ có một ngày.
Dialogue: 0,0:13:58.46,0:14:00.01,Default,,0,0,0,,{\i1}Rốt cuộc "ừ" là sao?{\i0}
Dialogue: 0,0:14:00.55,0:14:03.89,Default,,0,0,0,,{\i1}"Không phải" là sao nữa?{\i0}
Dialogue: 0,0:14:12.35,0:14:14.10,Default,,0,0,0,,{\i1}Sắp đến kỷ niệm thành lập trường rồi.{\i0}
Dialogue: 0,0:14:15.73,0:14:19.40,Default,,0,0,0,,- Trưng bày bảng chữ có gì vui chứ?\N{\i1}- Các bạn đều ở lại trường chuẩn bị.{\i0}
Dialogue: 0,0:14:19.48,0:14:22.40,Default,,0,0,0,,- Nói chuyện đó cũng vô dụng.\N{\i1}- Tạm không nói nội dung trưng bày…{\i0}
Dialogue: 0,0:14:22.99,0:14:25.62,Default,,0,0,0,,{\i1}…được cùng nhau chuẩn bị thế này\Ncũng rất vui.{\i0}
Dialogue: 0,0:14:25.70,0:14:27.87,Default,,0,0,0,,- Mình biết rồi. Cảm ơn.\N- Komura.
Dialogue: 0,0:14:28.45,0:14:30.29,Default,,0,0,0,,{\i1}Suy cho cùng Mie cũng ở đây mà.{\i0}
Dialogue: 0,0:14:30.37,0:14:32.12,Default,,0,0,0,,Có cần mình giúp không?
Dialogue: 0,0:14:32.21,0:14:34.88,Default,,0,0,0,,Chắc cậu nên đi rửa tay trước.
Dialogue: 0,0:14:37.42,0:14:41.13,Default,,0,0,0,,Vì nãy giờ toàn dùng\Ngiấy báo để trang trí…
Dialogue: 0,0:14:41.72,0:14:43.34,Default,,0,0,0,,Ra… ra vậy.
Dialogue: 0,0:14:43.43,0:14:44.68,Default,,0,0,0,,Trên mặt cậu cũng dính kìa.
Dialogue: 0,0:14:47.60,0:14:48.89,Default,,0,0,0,,Lau sạch chưa?
Dialogue: 0,0:14:57.06,0:14:58.98,Default,,0,0,0,,Komura, cậu có mệt không?
Dialogue: 0,0:14:59.52,0:15:00.73,Default,,0,0,0,,Có cần nghỉ một lát không?
Dialogue: 0,0:15:01.99,0:15:03.82,Default,,0,0,0,,Mình… mình vẫn ổn.
Dialogue: 0,0:15:03.90,0:15:06.16,Default,,0,0,0,,Dán xong cái này rồi nghỉ.
Dialogue: 0,0:15:07.49,0:15:09.91,Default,,0,0,0,,Có phải thú vị lắm không?
Dialogue: 0,0:15:16.50,0:15:18.00,Default,,0,0,0,,{\i1}Sao cô ấy cứ ở đây mãi?{\i0}
Dialogue: 0,0:15:18.67,0:15:20.92,Default,,0,0,0,,{\i1}Không còn chuyện gì để làm nữa sao?{\i0}
Dialogue: 0,0:15:21.63,0:15:23.92,Default,,0,0,0,,Dán xong cái này là được phải không?
Dialogue: 0,0:15:24.84,0:15:25.68,Default,,0,0,0,,Ừ.
Dialogue: 0,0:15:37.27,0:15:39.27,Default,,0,0,0,,{\i1}Chờ đến lúc chuẩn bị dán\Nthì keo khô hết rồi.{\i0}
Dialogue: 0,0:15:42.82,0:15:44.99,Default,,0,0,0,,{\i1}Chắc cô ấy muốn làm gì đó.{\i0}
Dialogue: 0,0:15:45.07,0:15:47.16,Default,,0,0,0,,{\i1}Mie đâu phải người chậm chạp.{\i0}
Dialogue: 0,0:15:47.82,0:15:49.41,Default,,0,0,0,,Để mình phết keo cho.
Dialogue: 0,0:15:49.49,0:15:51.49,Default,,0,0,0,,Mie phụ trách dán lên là được.
Dialogue: 0,0:15:51.99,0:15:53.12,Default,,0,0,0,,Ra vậy,
Dialogue: 0,0:15:53.20,0:15:54.58,Default,,0,0,0,,là phân công hợp tác.
Dialogue: 0,0:16:03.76,0:16:04.80,Default,,0,0,0,,Đây, Mie.
Dialogue: 0,0:16:04.88,0:16:05.84,Default,,0,0,0,,Được, giao cho mình.
Dialogue: 0,0:16:11.55,0:16:12.51,Default,,0,0,0,,{\an8}Cầm ngược rồi!
Dialogue: 0,0:16:13.01,0:16:14.60,Default,,0,0,0,,{\an8}Xin… xin lỗi cậu.
Dialogue: 0,0:16:14.68,0:16:16.48,Default,,0,0,0,,{\an8}Tạm thời cậu đừng cử động nhé.
Dialogue: 0,0:16:16.56,0:16:17.98,Default,,0,0,0,,{\an8}Mất mặt quá đi.
Dialogue: 0,0:16:18.06,0:16:19.02,Default,,0,0,0,,{\an8}Không, chuyện đó…
Dialogue: 0,0:16:20.06,0:16:21.73,Default,,0,0,0,,Là do mình sơ suất mà.
Dialogue: 0,0:16:23.36,0:16:24.23,Default,,0,0,0,,Mie.
Dialogue: 0,0:16:24.32,0:16:26.78,Default,,0,0,0,,Bên kia vẫn đang\Ntrang trí bằng giấy báo mà.
Dialogue: 0,0:16:29.78,0:16:33.45,Default,,0,0,0,,{\i1}Hả? Hóa ra không phải\Ncô ấy sang đây để tìm cái để làm sao?{\i0}
Dialogue: 0,0:16:34.45,0:16:36.45,Default,,0,0,0,,{\i1}Hay là cô ấy\Nkhông muốn trang trí giấy báo?{\i0}
Dialogue: 0,0:16:38.96,0:16:39.96,Default,,0,0,0,,Này.
Dialogue: 0,0:16:40.67,0:16:44.71,Default,,0,0,0,,Bao giờ cậu dán xong,\Nnếu muốn nghỉ thì nói với mình nhé.
Dialogue: 0,0:16:47.01,0:16:48.38,Default,,0,0,0,,Như thế này sao?
Dialogue: 0,0:16:49.76,0:16:50.97,Default,,0,0,0,,Mình làm với.
Dialogue: 0,0:16:51.05,0:16:52.26,Default,,0,0,0,,Hoan nghênh.
Dialogue: 0,0:16:52.35,0:16:53.22,Default,,0,0,0,,Hoan nghênh cậu.
Dialogue: 0,0:17:00.35,0:17:02.69,Default,,0,0,0,,{\i1}Cậu ấy muốn cùng mình nghỉ.{\i0}
Dialogue: 0,0:17:02.77,0:17:06.07,Default,,0,0,0,,{\i1}Không, không phải! Đừng tưởng bở nữa.{\i0}
Dialogue: 0,0:17:06.90,0:17:11.57,Default,,0,0,0,,{\i1}Vì Mie rất ấm áp nên mới qua gọi mình.{\i0}
Dialogue: 0,0:17:15.16,0:17:17.62,Default,,0,0,0,,Mình… mình đi lấy thêm keo dán.
Dialogue: 0,0:17:17.70,0:17:18.54,Default,,0,0,0,,Ừ.
Dialogue: 0,0:17:27.46,0:17:29.09,Default,,0,0,0,,Có… có chuyện gì vậy?
Dialogue: 0,0:17:30.30,0:17:32.55,Default,,0,0,0,,Mình muốn đi cùng cậu.
Dialogue: 0,0:17:36.77,0:17:40.10,Default,,0,0,0,,Hành… hành lang hơi tối,\Ncậu phải cẩn thận nhé.
Dialogue: 0,0:17:41.64,0:17:43.73,Default,,0,0,0,,PHÒNG DỤNG CỤ MỸ THUẬT
Dialogue: 0,0:17:43.81,0:17:45.15,Default,,0,0,0,,Không biết cửa có khóa không.
Dialogue: 0,0:17:47.07,0:17:48.86,Default,,0,0,0,,Tốt rồi, cửa không khóa.
Dialogue: 0,0:17:50.99,0:17:52.36,Default,,0,0,0,,Bên trong không có ai à?
Dialogue: 0,0:17:53.16,0:17:54.32,Default,,0,0,0,,Có vẻ vậy.
Dialogue: 0,0:17:55.87,0:17:58.33,Default,,0,0,0,,Chờ chút, Mie, để mình bật đèn đã.
Dialogue: 0,0:18:10.34,0:18:11.88,Default,,0,0,0,,Mình…
Dialogue: 0,0:18:11.97,0:18:12.88,Default,,0,0,0,,Mình phải bật đèn.
Dialogue: 0,0:18:14.05,0:18:16.81,Default,,0,0,0,,Hôm nay mình vẫn chưa được ngắm mặt cậu.
Dialogue: 0,0:18:16.89,0:18:18.10,Default,,0,0,0,,Cho mình ngắm được không?
Dialogue: 0,0:18:20.43,0:18:22.35,Default,,0,0,0,,{\i1}Ừ.{\i0}
Dialogue: 0,0:18:22.44,0:18:26.94,Default,,0,0,0,,{\i1}Mà phải, mình đã hứa những ngày cô ấy\Nquên kính mình sẽ cho cô ấy ngắm mặt mình.{\i0}
Dialogue: 0,0:18:27.52,0:18:29.86,Default,,0,0,0,,{\i1}Dù tất nhiên là có thể,{\i0}
Dialogue: 0,0:18:30.90,0:18:33.45,Default,,0,0,0,,{\i1}nhưng chỗ này có hơi nhạy cảm không?{\i0}
Dialogue: 0,0:18:34.45,0:18:36.95,Default,,0,0,0,,À, nói sao nhỉ?
Dialogue: 0,0:18:37.58,0:18:39.45,Default,,0,0,0,,Hay ta ra chỗ khác?
Dialogue: 0,0:18:45.88,0:18:50.55,Default,,0,0,0,,Mình… mình thấy\Nở chỗ không có ai thì tốt hơn.
Dialogue: 0,0:19:04.14,0:19:05.60,Default,,0,0,0,,{\i1}Lẽ nào{\i0}
Dialogue: 0,0:19:06.23,0:19:08.15,Default,,0,0,0,,{\i1}vì chuyện này mà cô ấy mới bảo mình nghỉ?{\i0}
Dialogue: 0,0:19:08.65,0:19:12.57,Default,,0,0,0,,{\i1}Cũng… cũng phải,\Nnếu người khác nhìn thấy thì sẽ hiểu lầm.{\i0}
Dialogue: 0,0:19:12.65,0:19:14.57,Default,,0,0,0,,{\i1}Chuyện đó đúng là khiến người ta khó xử.{\i0}
Dialogue: 0,0:19:15.82,0:19:19.87,Default,,0,0,0,,{\i1}Chỉ có mình vì quá nhạy cảm\Nnên mới thấy gượng gạo thôi.{\i0}
Dialogue: 0,0:19:21.24,0:19:22.75,Default,,0,0,0,,Vậy…
Dialogue: 0,0:19:23.54,0:19:25.17,Default,,0,0,0,,Cậu ngắm đi.
Dialogue: 0,0:19:25.25,0:19:26.58,Default,,0,0,0,,Cảm ơn cậu.
Dialogue: 0,0:19:26.67,0:19:27.96,Default,,0,0,0,,Mình lập tức xong liền.
Dialogue: 0,0:19:28.04,0:19:29.42,Default,,0,0,0,,{\i1}Lại giọng chiến binh rồi.{\i0}
Dialogue: 0,0:19:34.51,0:19:35.55,Default,,0,0,0,,Tối quá.
Dialogue: 0,0:19:35.63,0:19:37.59,Default,,0,0,0,,{\i1}Tất nhiên rồi.{\i0}
Dialogue: 0,0:19:44.18,0:19:46.14,Default,,0,0,0,,{\i1}Dù vào ngày quên đeo kính,{\i0}
Dialogue: 0,0:19:46.23,0:19:49.61,Default,,0,0,0,,{\i1}không thể nhìn rõ mặt của bạn bè\Nsẽ cảm thấy rất bất an,{\i0}
Dialogue: 0,0:19:50.69,0:19:53.65,Default,,0,0,0,,{\i1}nhưng sau khi nhìn được ở khoảng cách gần,\Ncô ấy sẽ thấy yên tâm.{\i0}
Dialogue: 0,0:19:54.69,0:19:57.20,Default,,0,0,0,,{\i1}Mie gần đây đã để ý chuyện này.{\i0}
Dialogue: 0,0:19:58.20,0:20:01.24,Default,,0,0,0,,{\i1}Vậy nên gần đây\Ncô ấy mới rất muốn nhìn mặt mình.{\i0}
Dialogue: 0,0:20:03.33,0:20:05.66,Default,,0,0,0,,Komura, nhìn mình này.
Dialogue: 0,0:20:08.67,0:20:11.09,Default,,0,0,0,,Xin lỗi, cho mình ngắm mặt cậu.
Dialogue: 0,0:20:13.46,0:20:15.42,Default,,0,0,0,,{\i1}Chỉ vậy thôi.{\i0}
Dialogue: 0,0:20:29.73,0:20:30.90,Default,,0,0,0,,{\i1}Liệu mình{\i0}
Dialogue: 0,0:20:31.61,0:20:32.90,Default,,0,0,0,,{\i1}có thể cho rằng…{\i0}
Dialogue: 0,0:20:34.19,0:20:40.03,Default,,0,0,0,,{\i1}Mie có tình cảm đặc biệt với mình không?{\i0}
Dialogue: 0,0:20:45.41,0:20:46.96,Default,,0,0,0,,Xong… xong rồi.
Dialogue: 0,0:20:49.42,0:20:50.92,Default,,0,0,0,,Cảm ơn cậu.
Dialogue: 0,0:20:51.96,0:20:54.42,Default,,0,0,0,,{\i1}Đối với Mie,{\i0}
Dialogue: 0,0:20:56.30,0:20:57.47,Default,,0,0,0,,{\i1}mình là gì?{\i0}
Dialogue: 0,0:21:05.89,0:21:07.64,Default,,0,0,0,,Cậu chậm quá đó, Komura.
Dialogue: 0,0:21:08.18,0:21:09.27,Default,,0,0,0,,Xin… xin lỗi.
Dialogue: 0,0:21:10.35,0:21:11.23,Default,,0,0,0,,Komura.
Dialogue: 0,0:21:12.40,0:21:13.36,Default,,0,0,0,,Mặt cậu
Dialogue: 0,0:21:13.44,0:21:15.44,Default,,0,0,0,,tốt hơn nên đi rửa đi.
Dialogue: 0,0:21:17.36,0:21:20.99,Default,,0,0,0,,- Cậu xem, mặt cậu đen hết cả rồi.\N- Mie, tay cậu đen hết cả rồi.
Dialogue: 0,0:21:21.07,0:21:21.91,Default,,0,0,0,,Lại nữa rồi.
Dialogue: 0,0:21:21.99,0:21:24.91,Default,,0,0,0,,Lúc nãy cậu lại sờ vào\Ngiấy báo phải không?
Dialogue: 0,0:21:28.50,0:21:29.33,Default,,0,0,0,,Chuyện đó…
Dialogue: 0,0:21:29.41,0:21:31.50,Default,,0,0,0,,Cái này… không phải vậy đâu.
Dialogue: 0,0:21:31.58,0:21:32.50,Default,,0,0,0,,Không phải cái gì?
Dialogue: 0,0:23:10.68,0:23:13.02,Default,,0,0,0,,{\i1}Tôi là Komura Kaede.\NĐể tôi giới thiệu tập sau.{\i0}
Dialogue: 0,0:23:13.89,0:23:17.44,Default,,0,0,0,,{\i1}Komura và Mie chuẩn bị cho\Nkỷ niệm thành lập trường.{\i0}
