Dialogue: 0,0:00:03.50,0:00:05.92,Default,,0,0,0,,{\i1}Lễ kỷ niệm thành lập trường\Nđã kết thúc tốt đẹp.{\i0}
Dialogue: 0,0:00:09.93,0:00:12.22,Default,,0,0,0,,{\i1}Cuối cùng cũng tới lúc này.{\i0}
Dialogue: 0,0:00:12.81,0:00:15.27,Default,,0,0,0,,{\i1}Dù có thể coi như\Nđã chọn được trường muốn vào,{\i0}
Dialogue: 0,0:00:15.93,0:00:18.73,Default,,0,0,0,,{\i1}nhưng vẫn nên bàn bạc với mẹ lần nữa xem.{\i0}
Dialogue: 0,0:00:18.81,0:00:20.02,Default,,0,0,0,,Komura.
Dialogue: 0,0:00:20.10,0:00:22.11,Default,,0,0,0,,Nghề nghiệp mơ ước của cậu là gì?
Dialogue: 0,0:00:22.61,0:00:24.07,Default,,0,0,0,,Nghề nghiệp mơ ước à?
Dialogue: 0,0:00:24.65,0:00:27.24,Default,,0,0,0,,Mình xem phiếu\Nkhảo sát nguyện vọng mới nghĩ đến.
Dialogue: 0,0:00:29.61,0:00:31.12,Default,,0,0,0,,Kiểu như game thủ sao?
Dialogue: 0,0:00:31.20,0:00:32.03,Default,,0,0,0,,Không…
Dialogue: 0,0:00:32.78,0:00:34.33,Default,,0,0,0,,Dù mình rất thích chơi game.
Dialogue: 0,0:00:35.12,0:00:37.04,Default,,0,0,0,,{\i1}Nghề nghiệp mơ ước sao?{\i0}
Dialogue: 0,0:00:37.71,0:00:39.50,Default,,0,0,0,,{\i1}Về chuyện tương lai,{\i0}
Dialogue: 0,0:00:39.58,0:00:42.92,Default,,0,0,0,,{\i1}mình chỉ muốn đi học và tìm được việc làm.{\i0}
Dialogue: 0,0:00:43.50,0:00:44.67,Default,,0,0,0,,Bí… bí mật.
Dialogue: 0,0:00:45.80,0:00:49.38,Default,,0,0,0,,{\i1}Mình không muốn để Mie biết\Nmình hoàn toàn chẳng có suy nghĩ gì.{\i0}
Dialogue: 0,0:00:49.88,0:00:52.97,Default,,0,0,0,,Vậy mình có thể nói của mình được không?
Dialogue: 0,0:00:53.80,0:00:54.64,Default,,0,0,0,,Ừ.
Dialogue: 0,0:00:54.72,0:00:55.72,Default,,0,0,0,,{\i1}Làm ơn nói đi.{\i0}
Dialogue: 0,0:00:55.81,0:00:59.02,Default,,0,0,0,,Vậy một mình mình phải xấu mặt rồi.
Dialogue: 0,0:00:59.10,0:01:02.61,Default,,0,0,0,,{\i1}Mình chỉ muốn ngồi nghe\NMie nói mãi về bản thân như vậy thôi.{\i0}
Dialogue: 0,0:01:02.69,0:01:03.86,Default,,0,0,0,,Chờ chút.
Dialogue: 0,0:01:03.94,0:01:05.61,Default,,0,0,0,,Có bức ảnh mình muốn cho cậu xem.
Dialogue: 0,0:01:10.70,0:01:12.70,Default,,0,0,0,,Tìm thấy rồi, chính là tấm này.
Dialogue: 0,0:01:12.78,0:01:16.12,Default,,0,0,0,,Mình tìm thấy\Ntrong lúc xem album ảnh mẫu giáo.
Dialogue: 0,0:01:16.70,0:01:18.29,Default,,0,0,0,,Ở đây có ghi mơ ước của bản thân.
Dialogue: 0,0:01:18.37,0:01:21.37,Default,,0,0,0,,Mình ghi là "muốn làm cô dâu của bố".
Dialogue: 0,0:01:21.46,0:01:23.38,Default,,0,0,0,,{\i1}Đúng là chuyện Mie sẽ làm.{\i0}
Dialogue: 0,0:01:24.38,0:01:26.63,Default,,0,0,0,,Mình xem xong cũng cười luôn.
Dialogue: 0,0:03:06.98,0:03:08.27,Default,,0,0,0,,Komura.
Dialogue: 0,0:03:08.36,0:03:09.40,Default,,0,0,0,,Cậu sao vậy?
Dialogue: 0,0:03:10.94,0:03:12.69,Default,,0,0,0,,{\an8}Mình lấy nhầm ảnh sao?
Dialogue: 0,0:03:12.78,0:03:14.40,Default,,0,0,0,,Không phải, đúng là bức ảnh đó rồi.
Dialogue: 0,0:03:14.49,0:03:17.74,Default,,0,0,0,,Lúc này… là lúc Mie mấy tuổi?
Dialogue: 0,0:03:17.82,0:03:19.99,Default,,0,0,0,,{\i1}Ai còng tay tôi lại đi.{\i0}
Dialogue: 0,0:03:20.49,0:03:23.54,Default,,0,0,0,,Chắc đây là hồi mình năm tuổi.
Dialogue: 0,0:03:23.62,0:03:24.54,Default,,0,0,0,,Hoặc sáu tuổi?
Dialogue: 0,0:03:24.62,0:03:27.54,Default,,0,0,0,,Lúc đó mình vẫn bụ bẫm lắm.
Dialogue: 0,0:03:28.42,0:03:31.30,Default,,0,0,0,,Mình… mình sẽ không cho cậu xem ảnh đâu.
Dialogue: 0,0:03:31.38,0:03:32.55,Default,,0,0,0,,Vì xấu hổ lắm.
Dialogue: 0,0:03:34.76,0:03:36.55,Default,,0,0,0,,{\i1}Xem ra quên nó đi thì tốt hơn.{\i0}
Dialogue: 0,0:03:37.26,0:03:40.43,Default,,0,0,0,,Hồi đó mình đúng là trẻ con.
Dialogue: 0,0:03:40.51,0:03:41.56,Default,,0,0,0,,Giờ thì sao?
Dialogue: 0,0:03:43.27,0:03:45.35,Default,,0,0,0,,Giờ mơ ước trong tương lai của Mie là gì?
Dialogue: 0,0:03:47.81,0:03:48.85,Default,,0,0,0,,Không có suy nghĩ gì.
Dialogue: 0,0:03:49.36,0:03:50.23,Default,,0,0,0,,{\i1}Hả?{\i0}
Dialogue: 0,0:03:52.27,0:03:54.57,Default,,0,0,0,,Mình từng muốn nuôi cá hay gì đó.
Dialogue: 0,0:03:54.65,0:03:57.28,Default,,0,0,0,,{\i1}Gì vậy? Hóa ra Mie cũng vậy sao?{\i0}
Dialogue: 0,0:03:59.11,0:04:02.87,Default,,0,0,0,,Và mình vẫn muốn làm cô dâu,
Dialogue: 0,0:04:03.37,0:04:05.45,Default,,0,0,0,,nhưng không phải là cô dâu của bố.
Dialogue: 0,0:04:05.96,0:04:09.88,Default,,0,0,0,,{\i1}Suy cho cùng, với Mie,\Nmình là người giống như bố cô ấy mà.{\i0}
Dialogue: 0,0:04:10.92,0:04:13.17,Default,,0,0,0,,{\i1}Rốt cuộc cô ấy muốn thành cô dâu của ai?{\i0}
Dialogue: 0,0:04:13.84,0:04:15.80,Default,,0,0,0,,{\i1}Mình chẳng muốn nghĩ đến chuyện đó đâu.{\i0}
Dialogue: 0,0:04:16.88,0:04:20.34,Default,,0,0,0,,- Hôm qua có phiên bản mới, mình chơi rồi.\N- Mình cũng đang tập làm cô dâu.
Dialogue: 0,0:04:20.43,0:04:22.81,Default,,0,0,0,,- Mình làm được omurice.\N- Vậy sao? Chơi được không?
Dialogue: 0,0:04:22.89,0:04:23.72,Default,,0,0,0,,Vậy sao?
Dialogue: 0,0:04:23.81,0:04:26.64,Default,,0,0,0,,{\i1}Mie biết nấu ăn\Nđúng là khiến người ta bất ngờ.{\i0}
Dialogue: 0,0:04:27.23,0:04:28.60,Default,,0,0,0,,Chờ chút.
Dialogue: 0,0:04:28.69,0:04:30.98,Default,,0,0,0,,Để mình xem có ảnh omurice không.
Dialogue: 0,0:04:31.06,0:04:31.90,Default,,0,0,0,,Tìm thấy rồi.
Dialogue: 0,0:04:32.44,0:04:34.15,Default,,0,0,0,,Cái này mình mới làm gần dây.
Dialogue: 0,0:04:34.23,0:04:36.49,Default,,0,0,0,,Dù trứng nhìn không ngon lắm,
Dialogue: 0,0:04:36.57,0:04:37.90,Default,,0,0,0,,nhưng ăn vào lại rất ngon.
Dialogue: 0,0:04:38.61,0:04:39.66,Default,,0,0,0,,Có vẻ ngon quá.
Dialogue: 0,0:04:39.74,0:04:41.66,Default,,0,0,0,,{\i1}Ảnh nhiều thông tin quá.{\i0}
Dialogue: 0,0:04:41.74,0:04:45.08,Default,,0,0,0,,{\i1}Nhưng chắc không phải là\Nnhững thứ không nên thấy.{\i0}
Dialogue: 0,0:04:45.16,0:04:46.75,Default,,0,0,0,,Cậu dùng tương cà vẽ gì vậy?
Dialogue: 0,0:04:46.83,0:04:47.66,Default,,0,0,0,,Bàn tay à?
Dialogue: 0,0:04:54.21,0:04:55.59,Default,,0,0,0,,Không có gì!
Dialogue: 0,0:04:56.46,0:04:58.01,Default,,0,0,0,,Tay… Ừ, là bàn tay.
Dialogue: 0,0:04:59.01,0:05:00.97,Default,,0,0,0,,{\i1}Mình nói sai gì sao?{\i0}
Dialogue: 0,0:05:04.51,0:05:07.52,Default,,0,0,0,,{\i1}Mình nhớ là ở đây.{\i0}
Dialogue: 0,0:05:07.60,0:05:08.48,Default,,0,0,0,,{\i1}Tìm thấy rồi.{\i0}
Dialogue: 0,0:05:08.56,0:05:10.10,Default,,0,0,0,,{\i1}Album ảnh mẫu giáo.{\i0}
Dialogue: 0,0:05:11.10,0:05:14.61,Default,,0,0,0,,{\i1}Hồi đó liệu mình có ước mơ gì không?{\i0}
Dialogue: 0,0:05:18.61,0:05:19.61,Default,,0,0,0,,{\i1}Nhân viên văn phòng.{\i0}
Dialogue: 0,0:05:19.70,0:05:21.11,Default,,0,0,0,,{\i1}Komura Kaede.{\i0}
Dialogue: 0,0:05:21.61,0:05:23.16,Default,,0,0,0,,{\i1}Nhân viên… Mơ ước của tôi!{\i0}
Dialogue: 0,0:05:23.24,0:05:25.53,Default,,0,0,0,,{\i1}Lẽ… lẽ nào mình không có ước mơ nữa sao?{\i0}
Dialogue: 0,0:05:25.62,0:05:28.70,Default,,0,0,0,,{\i1}Mà phải, mình gần như không nhớ\Nchuyện hồi nhỏ nữa rồi.{\i0}
Dialogue: 0,0:05:28.79,0:05:31.54,Default,,0,0,0,,{\i1}Đến chuyện hồi tiểu học\Ncũng không nhớ rõ lắm nữa.{\i0}
Dialogue: 0,0:05:32.71,0:05:34.21,Default,,0,0,0,,{\i1}Sau khi thích Mie,{\i0}
Dialogue: 0,0:05:34.29,0:05:37.80,Default,,0,0,0,,{\i1}mình mới bắt đầu\Ncó suy nghĩ của riêng mình.{\i0}
Dialogue: 0,0:05:37.88,0:05:40.01,Default,,0,0,0,,{\i1}Kaede, ăn cơm thôi.{\i0}
Dialogue: 0,0:05:40.09,0:05:41.09,Default,,0,0,0,,{\i1}Dạ.{\i0}
Dialogue: 0,0:05:56.48,0:05:59.07,Default,,0,0,0,,{\i1}Mình nhớ là như vậy phải không?{\i0}
Dialogue: 0,0:06:01.86,0:06:03.28,Default,,0,0,0,,Là lá phong à?
Dialogue: 0,0:06:04.53,0:06:07.20,Default,,0,0,0,,Đây chẳng phải là cái lá phong sao?
Dialogue: 0,0:06:07.28,0:06:08.49,Default,,0,0,0,,Không phải sao?
Dialogue: 0,0:06:08.58,0:06:09.45,Default,,0,0,0,,Hay là bàn tay?
Dialogue: 0,0:06:13.25,0:06:15.33,Default,,0,0,0,,Con nghĩ… chắc là bàn tay.
Dialogue: 0,0:06:15.42,0:06:17.38,Default,,0,0,0,,"Con nghĩ" là sao chứ?
Dialogue: 0,0:06:17.88,0:06:19.80,Default,,0,0,0,,{\i1}Đúng vậy, đây là bàn tay.{\i0}
Dialogue: 0,0:06:19.88,0:06:20.71,Default,,0,0,0,,{\i1}Là bàn tay.{\i0}
Dialogue: 0,0:06:20.80,0:06:22.63,Default,,0,0,0,,{\i1}Dù có cố tình coi nó là lá phong{\i0}
Dialogue: 0,0:06:22.72,0:06:24.55,Default,,0,0,0,,{\i1}thì chắc chắn nó cũng không có hàm ý gì.{\i0}
Dialogue: 0,0:06:27.18,0:06:28.72,Default,,0,0,0,,{\i1}Omurice Mie làm{\i0}
Dialogue: 0,0:06:29.31,0:06:30.77,Default,,0,0,0,,{\i1}không biết có mùi vị ra sao?{\i0}
Dialogue: 0,0:06:31.39,0:06:34.14,Default,,0,0,0,,{\i1}Nếu Mie làm omurice cho mình,{\i0}
Dialogue: 0,0:06:34.23,0:06:36.31,Default,,0,0,0,,{\i1}cô ấy sẽ dùng tương cà vẽ hình gì nhỉ?{\i0}
Dialogue: 0,0:06:38.36,0:06:39.90,Default,,0,0,0,,{\i1}- Thế nào?\N- Mie…{\i0}
Dialogue: 0,0:06:39.98,0:06:40.82,Default,,0,0,0,,{\i1}Ngon không?{\i0}
Dialogue: 0,0:06:40.90,0:06:41.86,Default,,0,0,0,,{\i1}…ngồi cạnh mình.{\i0}
Dialogue: 0,0:06:45.82,0:06:46.66,Default,,0,0,0,,Sao vậy?
Dialogue: 0,0:06:48.53,0:06:49.41,Default,,0,0,0,,Không có gì ạ.
Dialogue: 0,0:06:55.21,0:06:56.25,Default,,0,0,0,,{\i1}Cảnh tượng lúc nãy…{\i0}
Dialogue: 0,0:06:57.54,0:07:00.63,Default,,0,0,0,,{\i1}chẳng phải là\Nước mơ trong tương lai của mình sao?{\i0}
Dialogue: 0,0:07:10.72,0:07:13.89,Default,,0,0,0,,{\i1}Không được, vậy chắc chắn sẽ có chuyện.{\i0}
Dialogue: 0,0:07:15.23,0:07:18.90,Default,,0,0,0,,{\i1}Chuyện mơ ước phải suy nghĩ kỹ mới được.{\i0}
Dialogue: 0,0:07:18.98,0:07:20.57,Default,,0,0,0,,Komura, chào buổi sáng.
Dialogue: 0,0:07:22.03,0:07:23.44,Default,,0,0,0,,Phiếu khảo sát nguyện vọng hả?
Dialogue: 0,0:07:23.53,0:07:24.65,Default,,0,0,0,,Không được.
Dialogue: 0,0:07:24.74,0:07:26.66,Default,,0,0,0,,CHÚ RỂ CỦA…
Dialogue: 0,0:07:27.24,0:07:28.12,Default,,0,0,0,,Chú rể của ai?
Dialogue: 0,0:07:30.66,0:07:31.49,Default,,0,0,0,,Cái đó…
Dialogue: 0,0:07:32.74,0:07:35.12,Default,,0,0,0,,Không phải là làm chú rể của ai đâu.
Dialogue: 0,0:07:35.71,0:07:38.54,Default,,0,0,0,,Là mình muốn kết hôn thôi.
Dialogue: 0,0:07:39.71,0:07:40.67,Default,,0,0,0,,{\i1}Hết cách rồi.{\i0}
Dialogue: 0,0:07:40.75,0:07:42.46,Default,,0,0,0,,{\i1}Có bị coi là tên ngốc cũng không sao.{\i0}
Dialogue: 0,0:07:46.72,0:07:48.09,Default,,0,0,0,,{\i1}Hả?{\i0}
Dialogue: 0,0:07:51.76,0:07:53.64,Default,,0,0,0,,Cậu… cậu đang giận sao?
Dialogue: 0,0:07:54.27,0:07:55.18,Default,,0,0,0,,Không có.
Dialogue: 0,0:07:57.69,0:07:59.65,Default,,0,0,0,,{\i1}Hả?{\i0}
Dialogue: 0,0:08:00.69,0:08:02.98,Default,,0,0,0,,LỚP HỌC NỘI TRỢ
Dialogue: 0,0:08:09.62,0:08:11.33,Default,,0,0,0,,Chắc là được rồi đó.
Dialogue: 0,0:08:13.49,0:08:14.95,Default,,0,0,0,,Cảm ơn cậu, Mie.
Dialogue: 0,0:08:15.04,0:08:15.87,Default,,0,0,0,,Không có gì.
Dialogue: 0,0:08:15.95,0:08:17.79,Default,,0,0,0,,{\i1}Hôm nay là buổi thực tập nội trợ.{\i0}
Dialogue: 0,0:08:18.58,0:08:20.46,Default,,0,0,0,,{\i1}Xếp nhóm bằng cách rút thăm.{\i0}
Dialogue: 0,0:08:20.54,0:08:21.54,Default,,0,0,0,,Cậu không sao chứ?
Dialogue: 0,0:08:22.09,0:08:23.42,Default,,0,0,0,,Mình… mình không sao.
Dialogue: 0,0:08:23.50,0:08:24.42,Default,,0,0,0,,{\i1}Đáng ghét.{\i0}
Dialogue: 0,0:08:24.51,0:08:29.09,Default,,0,0,0,,{\i1}Cũng tức là người ở nhóm đó được ăn\Nbánh quy do đích thân Mie tặng sao?{\i0}
Dialogue: 0,0:08:31.01,0:08:33.43,Default,,0,0,0,,{\i1}Cho vào danh sách món muốn ăn sau này.{\i0}
Dialogue: 0,0:08:33.51,0:08:34.68,Default,,0,0,0,,OMURICE, BÁNH QUY CỦA MIE
Dialogue: 0,0:08:34.77,0:08:36.93,Default,,0,0,0,,Komura, lấy giúp mình\Nmàng bọc thực phẩm nhé?
Dialogue: 0,0:08:38.27,0:08:40.52,Default,,0,0,0,,{\i1}Không được,\Nphải tập trung tinh thần vào mới được.{\i0}
Dialogue: 0,0:08:40.60,0:08:42.31,Default,,0,0,0,,{\i1}Đừng chú ý đến nhóm đó nữa.{\i0}
Dialogue: 0,0:08:43.27,0:08:44.23,Default,,0,0,0,,{\i1}Gần quá đi!{\i0}
Dialogue: 0,0:08:44.32,0:08:46.61,Default,,0,0,0,,- Có vẻ rất ngon.\N{\i1}- Đứng gần nhau quá đi.{\i0}
Dialogue: 0,0:08:46.69,0:08:48.15,Default,,0,0,0,,{\i1}Azuma, xin cậu…{\i0}
Dialogue: 0,0:08:48.24,0:08:49.82,Default,,0,0,0,,{\i1}Coi như tôi xin cậu,{\i0}
Dialogue: 0,0:08:49.91,0:08:52.41,Default,,0,0,0,,{\i1}làm ơn đừng tỏ ra đẹp trai như vậy\Nnữa được không?{\i0}
Dialogue: 0,0:08:52.49,0:08:53.58,Default,,0,0,0,,{\i1}Xin cậu đó!{\i0}
Dialogue: 0,0:08:53.66,0:08:56.04,Default,,0,0,0,,Trông không giống đồng xu nhỉ.
Dialogue: 0,0:08:57.20,0:08:59.67,Default,,0,0,0,,Mình muốn làm thành hình đồng xu.
Dialogue: 0,0:08:59.75,0:09:01.63,Default,,0,0,0,,Là kiểu xu để chơi điện tử đó sao?
Dialogue: 0,0:09:01.71,0:09:04.67,Default,,0,0,0,,Vậy kẻ vạch xung quanh được không?
Dialogue: 0,0:09:04.75,0:09:05.92,Default,,0,0,0,,Ra vậy.
Dialogue: 0,0:09:06.00,0:09:10.68,Default,,0,0,0,,Nhưng mình nghĩ Komura nhận được quà gì\Ncũng sẽ rất vui thôi.
Dialogue: 0,0:09:10.76,0:09:13.93,Default,,0,0,0,,Nhưng dễ thương một chút chắc sẽ vui hơn.
Dialogue: 0,0:09:18.68,0:09:20.35,Default,,0,0,0,,Mình có nói để tặng cậu ấy sao?
Dialogue: 0,0:09:21.02,0:09:23.19,Default,,0,0,0,,- Cái này…\N{\i1}- Nhìn hai người họ… vui vẻ quá đi!{\i0}
Dialogue: 0,0:09:23.27,0:09:25.40,Default,,0,0,0,,- Đồng xu này là…\N- Cậu không sao chứ?
Dialogue: 0,0:09:25.48,0:09:27.03,Default,,0,0,0,,Có lúc cậu ấy sẽ như vậy đó.
Dialogue: 0,0:09:27.53,0:09:30.45,Default,,0,0,0,,Mình nghĩ không làm xu sẽ tốt hơn.
Dialogue: 0,0:09:31.03,0:09:31.91,Default,,0,0,0,,Tại sao?
Dialogue: 0,0:09:32.41,0:09:36.66,Default,,0,0,0,,Lần trước cậu ấy đến khu chơi điện tử\Nmà lâu rồi chưa đến, phát hiện xu hết hạn.
Dialogue: 0,0:09:36.74,0:09:38.75,Default,,0,0,0,,Chắc là cậu ấy hơi thất vọng.
Dialogue: 0,0:09:39.45,0:09:41.67,Default,,0,0,0,,Ý cậu là cậu ấy hết sạch xu rồi sao?
Dialogue: 0,0:09:41.75,0:09:42.62,Default,,0,0,0,,{\i1}Phải.{\i0}
Dialogue: 0,0:09:44.25,0:09:46.96,Default,,0,0,0,,Komura cũng thất vọng cả vì chuyện đó sao?
Dialogue: 0,0:09:47.05,0:09:48.80,Default,,0,0,0,,Không, đây không phải chuyện nhỏ đâu.
Dialogue: 0,0:09:48.88,0:09:50.17,Default,,0,0,0,,Với cậu ấy là chuyện lớn đó.
Dialogue: 0,0:09:50.72,0:09:52.97,Default,,0,0,0,,Nhưng cậu ấy\Ncũng vui vẻ trở lại rất nhanh.
Dialogue: 0,0:09:53.05,0:09:54.60,Default,,0,0,0,,{\i1}Đến cả Yasaka…{\i0}
Dialogue: 0,0:09:54.68,0:09:56.10,Default,,0,0,0,,{\i1}Mọi người đều giống nhau!{\i0}
Dialogue: 0,0:09:56.18,0:09:58.47,Default,,0,0,0,,{\i1}Đáng ghét, chẳng nghe thấy họ đang nói gì.{\i0}
Dialogue: 0,0:09:58.56,0:10:02.23,Default,,0,0,0,,Ở khu trò chơi điện tử,\NKomura toàn chơi trò dùng đồng xu sao?
Dialogue: 0,0:10:02.31,0:10:03.48,Default,,0,0,0,,Phải.
Dialogue: 0,0:10:03.56,0:10:06.40,Default,,0,0,0,,{\i1}Chơi rất chuyên tâm, quên cả bản thân.{\i0}
Dialogue: 0,0:10:06.48,0:10:08.48,Default,,0,0,0,,{\i1}Quên cả bản thân ư?{\i0}
Dialogue: 0,0:10:08.57,0:10:11.99,Default,,0,0,0,,Cậu ấy còn chơi trò gắp đồ nữa.\NKiểu gắp được đồ ăn vặt.
Dialogue: 0,0:10:12.65,0:10:15.74,Default,,0,0,0,,Đồ gắp được\Nhình như cậu ấy toàn đem về cho mẹ.
Dialogue: 0,0:10:15.82,0:10:17.16,Default,,0,0,0,,Vậy sao?
Dialogue: 0,0:10:18.66,0:10:21.54,Default,,0,0,0,,Vậy thì không làm đồng xu được rồi.
Dialogue: 0,0:10:21.62,0:10:24.92,Default,,0,0,0,,Không sao đâu, dù sao cậu ấy\Ncũng vui vẻ trở lại rồi, chắc là được.
Dialogue: 0,0:10:25.00,0:10:26.29,Default,,0,0,0,,Rốt cuộc là làm không đây?
Dialogue: 0,0:10:26.38,0:10:28.30,Default,,0,0,0,,Vậy mình tiếp tục vẽ vạch.
Dialogue: 0,0:10:28.38,0:10:29.25,Default,,0,0,0,,Được không?
Dialogue: 0,0:10:30.09,0:10:31.01,Default,,0,0,0,,Vẽ vạch?
Dialogue: 0,0:10:31.09,0:10:32.30,Default,,0,0,0,,Mình nghĩ là được.
Dialogue: 0,0:10:35.39,0:10:39.18,Default,,0,0,0,,Mie khi đeo kính động tác vẫn chậm nhỉ.
Dialogue: 0,0:10:39.26,0:10:40.39,Default,,0,0,0,,Ý cậu là sao?
Dialogue: 0,0:10:41.85,0:10:43.60,Default,,0,0,0,,Không có gì, xin lỗi nhé.
Dialogue: 0,0:10:43.69,0:10:45.19,Default,,0,0,0,,- Là chim sao?\N- Ừ.
Dialogue: 0,0:10:45.77,0:10:47.11,Default,,0,0,0,,Đẹp quá.
Dialogue: 0,0:10:47.19,0:10:48.44,Default,,0,0,0,,Cậu thích chim chóc à?
Dialogue: 0,0:10:48.52,0:10:49.36,Default,,0,0,0,,Ừ.
Dialogue: 0,0:10:49.44,0:10:51.69,Default,,0,0,0,,Chị hàng xóm cạnh nhà mình\Nthích chim chóc.
Dialogue: 0,0:10:56.91,0:10:58.16,Default,,0,0,0,,Chị ấy thích sao?
Dialogue: 0,0:10:59.74,0:11:02.58,Default,,0,0,0,,Chị hàng xóm cạnh nhà?\NChị ấy hơn cậu bao tuổi?
Dialogue: 0,0:11:02.66,0:11:03.79,Default,,0,0,0,,Chị ấy đang học đại học.
Dialogue: 0,0:11:04.79,0:11:05.67,Default,,0,0,0,,Là người lớn rồi.
Dialogue: 0,0:11:05.75,0:11:07.21,Default,,0,0,0,,Phải.
Dialogue: 0,0:11:07.29,0:11:09.71,Default,,0,0,0,,Vậy nên chị ấy chẳng để ý đến mình.
Dialogue: 0,0:11:11.80,0:11:14.80,Default,,0,0,0,,Mình muốn tạo cơ hội.\NMình bắt chước Mie được không?
Dialogue: 0,0:11:15.30,0:11:16.22,Default,,0,0,0,,Sẵn sàng.
Dialogue: 0,0:11:17.22,0:11:18.18,Default,,0,0,0,,Cảm ơn cậu.
Dialogue: 0,0:11:18.85,0:11:20.64,Default,,0,0,0,,Mình sẽ cố gắng thổ lộ.
Dialogue: 0,0:11:23.56,0:11:25.23,Default,,0,0,0,,Không thổ lộ không được sao?
Dialogue: 0,0:11:27.60,0:11:30.73,Default,,0,0,0,,Không thổ lộ thì sau này có lẽ\Nsẽ không thể bên nhau, không phải sao?
Dialogue: 0,0:11:35.95,0:11:37.49,Default,,0,0,0,,Cậu vẽ xong chưa?
Dialogue: 0,0:11:42.12,0:11:43.50,Default,,0,0,0,,Azuma.
Dialogue: 0,0:11:44.12,0:11:46.12,Default,,0,0,0,,- Tạm biệt.\N- Tạm biệt.
Dialogue: 0,0:11:46.21,0:11:47.58,Default,,0,0,0,,Có rảnh đi ăn bánh ngọt không?
Dialogue: 0,0:11:47.67,0:11:50.00,Default,,0,0,0,,- Được!\N{\i1}- Tình cảm giữa họ trở nên thân thiết rồi!{\i0}
Dialogue: 0,0:11:50.09,0:11:51.59,Default,,0,0,0,,{\i1}Không được rồi.{\i0}
Dialogue: 0,0:11:51.67,0:11:54.51,Default,,0,0,0,,{\i1}Mình không thắng nổi\Nngười đẹp trai như vậy.{\i0}
Dialogue: 0,0:11:54.59,0:11:56.13,Default,,0,0,0,,Mie…
Dialogue: 0,0:11:56.22,0:11:58.64,Default,,0,0,0,,Cậu nói những chuyện gì với Azuma vậy?
Dialogue: 0,0:11:59.30,0:12:01.43,Default,,0,0,0,,{\i1}Đừng như vậy, mình không muốn nghe.{\i0}
Dialogue: 0,0:12:01.51,0:12:02.47,Default,,0,0,0,,À…
Dialogue: 0,0:12:03.52,0:12:07.64,Default,,0,0,0,,Mình thấy Azuma suy nghĩ rất nhiều chuyện,\Ncảm giác rất trưởng thành.
Dialogue: 0,0:12:10.86,0:12:11.77,Default,,0,0,0,,{\i1}Không được rồi.{\i0}
Dialogue: 0,0:12:11.86,0:12:13.73,Default,,0,0,0,,{\i1}Phải mau rời khỏi đây thôi.{\i0}
Dialogue: 0,0:12:14.32,0:12:16.95,Default,,0,0,0,,{\i1}Mie chẳng qua chỉ đang khen Azuma thôi mà.{\i0}
Dialogue: 0,0:12:17.03,0:12:19.24,Default,,0,0,0,,{\i1}Chẳng biết vì sao\Nmình lại thấy khó chịu đến vậy.{\i0}
Dialogue: 0,0:12:21.24,0:12:22.24,Default,,0,0,0,,{\i1}Đáng ghét thật.{\i0}
Dialogue: 0,0:12:22.33,0:12:25.08,Default,,0,0,0,,{\i1}Hóa ra mình là người nhỏ nhen vậy sao?{\i0}
Dialogue: 0,0:12:25.16,0:12:27.58,Default,,0,0,0,,Komura!
Dialogue: 0,0:12:37.26,0:12:38.97,Default,,0,0,0,,Chờ… chờ một chút.
Dialogue: 0,0:12:40.68,0:12:43.93,Default,,0,0,0,,Xin… xin lỗi, mình không nghe thấy cậu.\NCậu chờ chút, mình đi lấy nước.
Dialogue: 0,0:12:53.36,0:12:55.11,Default,,0,0,0,,Cảm ơn cậu mua nước cho mình.
Dialogue: 0,0:12:55.19,0:12:56.57,Default,,0,0,0,,Không… không có gì.
Dialogue: 0,0:12:57.15,0:12:59.11,Default,,0,0,0,,Cũng may mình đeo kính.
Dialogue: 0,0:12:59.20,0:13:01.78,Default,,0,0,0,,Nếu không đeo\Nchắc mình không tìm ra cậu mất.
Dialogue: 0,0:13:01.87,0:13:05.74,Default,,0,0,0,,Nhưng cũng có thể\Nchỉ vì Komura đi rất nhanh.
Dialogue: 0,0:13:05.83,0:13:11.83,Default,,0,0,0,,Hôm nay Azuma bảo dù mình đeo kính\Nnhưng động tác vẫn rất chậm.
Dialogue: 0,0:13:13.63,0:13:16.80,Default,,0,0,0,,Động tác của mình chậm thật sao?
Dialogue: 0,0:13:18.59,0:13:21.38,Default,,0,0,0,,Nếu… nếu cậu không sao nữa thì mình nên…
Dialogue: 0,0:13:27.27,0:13:28.18,Default,,0,0,0,,Cái này tặng cậu.
Dialogue: 0,0:13:30.77,0:13:33.23,Default,,0,0,0,,Cảm… Cảm ơn cậu.
Dialogue: 0,0:13:33.31,0:13:35.77,Default,,0,0,0,,{\i1}Tâm trạng đột ngột vui vẻ trở lại rồi.{\i0}
Dialogue: 0,0:13:36.27,0:13:38.78,Default,,0,0,0,,Nó thành hình quả bóng rồi.
Dialogue: 0,0:13:38.86,0:13:40.90,Default,,0,0,0,,Vốn dĩ mình muốn làm hình đồng xu.
Dialogue: 0,0:13:40.99,0:13:42.57,Default,,0,0,0,,Đúng… đúng thật.
Dialogue: 0,0:13:43.32,0:13:44.41,Default,,0,0,0,,Ăn đi.
Dialogue: 0,0:13:44.49,0:13:45.45,Default,,0,0,0,,Được.
Dialogue: 0,0:13:45.53,0:13:46.70,Default,,0,0,0,,Mời cậu.
Dialogue: 0,0:13:49.62,0:13:52.12,Default,,0,0,0,,Này, bánh quy đó…
Dialogue: 0,0:13:54.13,0:13:57.55,Default,,0,0,0,,mình làm là để tặng Komura đó.
Dialogue: 0,0:14:01.13,0:14:02.63,Default,,0,0,0,,Mình nghĩ không biết…
Dialogue: 0,0:14:03.13,0:14:06.60,Default,,0,0,0,,Komura có đói bụng không.
Dialogue: 0,0:14:13.52,0:14:14.56,Default,,0,0,0,,Cảm ơn cậu.
Dialogue: 0,0:14:15.15,0:14:18.07,Default,,0,0,0,,{\i1}Mie trước giờ\Nluôn là người khó đoán như vậy.{\i0}
Dialogue: 0,0:14:18.15,0:14:21.57,Default,,0,0,0,,Chậm chạp quá sao?
Dialogue: 0,0:14:23.03,0:14:24.28,Default,,0,0,0,,Không… không đâu.
Dialogue: 0,0:14:24.36,0:14:27.53,Default,,0,0,0,,Sự chậm chạp của Mie\Nlà điểm cộng của cậu đó.
Dialogue: 0,0:14:27.62,0:14:30.45,Default,,0,0,0,,Nhờ có Mie,\Nmọi người mới hòa đồng như vậy.
Dialogue: 0,0:14:30.54,0:14:33.42,Default,,0,0,0,,Mình nghĩ Azuma cũng không có ý xấu.
Dialogue: 0,0:14:47.43,0:14:51.35,Default,,0,0,0,,{\i1}Mình không muốn\Nđể Mie vội vàng như lúc nãy nữa.{\i0}
Dialogue: 0,0:14:52.85,0:14:54.85,Default,,0,0,0,,{\i1}Mình cũng sẽ đi thật chậm.{\i0}
Dialogue: 0,0:14:55.44,0:14:57.86,Default,,0,0,0,,{\i1}Để không bỏ lại Mie đằng sau.{\i0}
Dialogue: 0,0:14:57.94,0:14:58.94,Default,,0,0,0,,Ngon không?
Dialogue: 0,0:15:04.45,0:15:08.07,Default,,0,0,0,,{\i1}Họ sẽ hoàn thành nhiệm vụ mua đồ chứ?{\i0}
Dialogue: 0,0:15:10.33,0:15:11.45,Default,,0,0,0,,{\i1}Mie hồi nhỏ{\i0}
Dialogue: 0,0:15:11.54,0:15:12.95,Default,,0,0,0,,{\i1}dễ thương thật.{\i0}
Dialogue: 0,0:15:15.29,0:15:16.17,Default,,0,0,0,,Làm gì vậy?
Dialogue: 0,0:15:16.79,0:15:19.29,Default,,0,0,0,,{\i1}Đó không phải bức ảnh mình được phép xem.{\i0}
Dialogue: 0,0:15:19.38,0:15:20.92,Default,,0,0,0,,{\i1}Phải mau quên đi mới được.{\i0}
Dialogue: 0,0:15:22.30,0:15:25.09,Default,,0,0,0,,{\i1}Mình hồi nhỏ như thế nào nhỉ?{\i0}
Dialogue: 0,0:15:27.22,0:15:28.26,Default,,0,0,0,,{\i1}Mẹ…{\i0}
Dialogue: 0,0:15:28.93,0:15:31.35,Default,,0,0,0,,{\i1}sao toàn để những bức ảnh kiểu này vậy?{\i0}
Dialogue: 0,0:15:31.43,0:15:33.39,Default,,0,0,0,,{\i1}Rốt cuộc là ngã thế nào vậy?{\i0}
Dialogue: 0,0:15:34.52,0:15:38.86,Default,,0,0,0,,{\i1}Xem ra mẹ mình thích\Nnhìn thấy con trai mình mất mặt.{\i0}
Dialogue: 0,0:15:39.98,0:15:41.86,Default,,0,0,0,,Kaede, ăn cơm thôi.
Dialogue: 0,0:15:41.94,0:15:42.94,Default,,0,0,0,,Vâng.
Dialogue: 0,0:15:43.03,0:15:46.03,Default,,0,0,0,,Con đang xem\Nalbum ảnh hồi nhỏ, mẹ đúng là…
Dialogue: 0,0:15:46.66,0:15:47.53,Default,,0,0,0,,Sao?
Dialogue: 0,0:15:48.20,0:15:50.62,Default,,0,0,0,,NĂM 3, LỚP B
Dialogue: 0,0:15:57.33,0:15:58.21,Default,,0,0,0,,Komura.
Dialogue: 0,0:15:58.71,0:15:59.83,Default,,0,0,0,,Đây là ảnh gì?
Dialogue: 0,0:16:01.42,0:16:02.59,Default,,0,0,0,,Khoan, trả tôi!
Dialogue: 0,0:16:03.13,0:16:03.96,Default,,0,0,0,,Sao lại thế?
Dialogue: 0,0:16:04.05,0:16:05.67,Default,,0,0,0,,Tôi để nhầm vào đâu à?
Dialogue: 0,0:16:06.93,0:16:08.55,Default,,0,0,0,,Sao cậu lại bị chảy máu mũi?
Dialogue: 0,0:16:08.64,0:16:11.01,Default,,0,0,0,,{\i1}Lại còn đúng tấm này.{\i0}
Dialogue: 0,0:16:11.10,0:16:12.97,Default,,0,0,0,,Tôi… tôi ngã từ trên xà đơn xuống.
Dialogue: 0,0:16:13.06,0:16:14.60,Default,,0,0,0,,Được rồi, mau trả tôi đi.
Dialogue: 0,0:16:14.68,0:16:15.64,Default,,0,0,0,,Ảnh?
Dialogue: 0,0:16:16.94,0:16:18.77,Default,,0,0,0,,Là Komura hồi nhỏ.
Dialogue: 0,0:16:31.07,0:16:32.41,Default,,0,0,0,,Đây là ảnh gì vậy?
Dialogue: 0,0:16:32.49,0:16:35.04,Default,,0,0,0,,Ảnh cậu ấy ngã trên xà đơn xuống,\Nvừa chảy máu mũi vừa khóc.
Dialogue: 0,0:16:35.12,0:16:36.83,Default,,0,0,0,,Tôi không khóc!
Dialogue: 0,0:16:37.41,0:16:40.75,Default,,0,0,0,,Komura, ngày xưa cậu tóc đen.
Dialogue: 0,0:16:40.83,0:16:41.96,Default,,0,0,0,,Phải.
Dialogue: 0,0:16:43.63,0:16:45.26,Default,,0,0,0,,Cố lên, Mie.
Dialogue: 0,0:16:50.55,0:16:51.55,Default,,0,0,0,,Xin lỗi.
Dialogue: 0,0:16:52.64,0:16:54.18,Default,,0,0,0,,Không… không có gì.
Dialogue: 0,0:16:58.14,0:16:59.81,Default,,0,0,0,,Được rồi, tất cả ngồi xuống.
Dialogue: 0,0:17:00.65,0:17:02.77,Default,,0,0,0,,Chuẩn bị vào lớp.
Dialogue: 0,0:17:02.86,0:17:05.57,Default,,0,0,0,,{\i1}Giờ nó biến thành\Ntài sản văn hóa quan trọng rồi.{\i0}
Dialogue: 0,0:17:07.36,0:17:09.57,Default,,0,0,0,,Komura, ta cùng về đi.
Dialogue: 0,0:17:11.20,0:17:12.07,Default,,0,0,0,,Ừ.
Dialogue: 0,0:17:15.54,0:17:18.58,Default,,0,0,0,,{\i1}Dạo này hình như\Ncó nhiều cơ hội cùng về nhà hơn.{\i0}
Dialogue: 0,0:17:18.66,0:17:19.91,Default,,0,0,0,,{\i1}Như vậy có ổn không?{\i0}
Dialogue: 0,0:17:20.00,0:17:22.58,Default,,0,0,0,,{\i1}Sẽ không bị\Nmọi người đồn thổi hiểu nhầm chứ?{\i0}
Dialogue: 0,0:17:27.30,0:17:29.63,Default,,0,0,0,,Này, cậu muốn cùng đi công viên không?
Dialogue: 0,0:17:31.13,0:17:33.47,Default,,0,0,0,,- Tại… tại sao?\N- Mình muốn chơi.
Dialogue: 0,0:17:33.55,0:17:34.55,Default,,0,0,0,,{\i1}Đột ngột vậy?{\i0}
Dialogue: 0,0:17:37.68,0:17:40.14,Default,,0,0,0,,Nếu định chơi\Nthì đeo kính vào sẽ dễ chơi hơn.
Dialogue: 0,0:17:40.23,0:17:42.19,Default,,0,0,0,,Mình về nhà lấy kính rồi quay lại ngay.
Dialogue: 0,0:17:42.27,0:17:43.48,Default,,0,0,0,,{\i1}Phải đi bộ nhiều lắm đó.{\i0}
Dialogue: 0,0:17:44.36,0:17:46.02,Default,,0,0,0,,Có… có cần mình đi cùng không?
Dialogue: 0,0:17:46.11,0:17:48.19,Default,,0,0,0,,Không sao, mình quay lại ngay.
Dialogue: 0,0:17:49.78,0:17:51.45,Default,,0,0,0,,Cậu phải cẩn thận đó.
Dialogue: 0,0:17:51.53,0:17:55.74,Default,,0,0,0,,{\i1}Vì hôm nay nhắc đến xà đơn\Nnên mới muốn chơi sao?{\i0}
Dialogue: 0,0:17:56.66,0:17:59.91,Default,,0,0,0,,{\i1}Cảm giác… hơi giống hẹn hò sau giờ học.{\i0}
Dialogue: 0,0:18:01.29,0:18:03.00,Default,,0,0,0,,{\i1}Không được suy nghĩ như vậy.{\i0}
Dialogue: 0,0:18:05.09,0:18:07.80,Default,,0,0,0,,{\i1}Bao lâu rồi mình không chơi xà đơn nhỉ?{\i0}
Dialogue: 0,0:18:07.88,0:18:09.71,Default,,0,0,0,,{\i1}Lần đó{\i0}
Dialogue: 0,0:18:10.22,0:18:13.72,Default,,0,0,0,,{\i1}mình muốn lộn ngược lên xà\Nnên mới ngã xuống.{\i0}
Dialogue: 0,0:18:13.80,0:18:14.64,Default,,0,0,0,,{\i1}Chắc là đúng vậy.{\i0}
Dialogue: 0,0:18:20.10,0:18:21.14,Default,,0,0,0,,{\i1}Hả?{\i0}
Dialogue: 0,0:18:26.86,0:18:28.32,Default,,0,0,0,,{\i1}Không thể lộn nổi.{\i0}
Dialogue: 0,0:18:30.28,0:18:32.49,Default,,0,0,0,,Komura, để cậu chờ lâu rồi.
Dialogue: 0,0:18:32.57,0:18:34.45,Default,,0,0,0,,Cậu quay lại rồi. Mình bắt đầu trước rồi.
Dialogue: 0,0:18:35.32,0:18:36.49,Default,,0,0,0,,{\i1}Bắt đầu trước cái gì?{\i0}
Dialogue: 0,0:18:37.16,0:18:38.37,Default,,0,0,0,,Xin lỗi.
Dialogue: 0,0:18:38.45,0:18:41.25,Default,,0,0,0,,Mình đeo kính tới rồi.
Dialogue: 0,0:18:41.33,0:18:44.25,Default,,0,0,0,,Có thể cho mình xem lại bức ảnh đó không?
Dialogue: 0,0:18:45.08,0:18:46.38,Default,,0,0,0,,{\i1}Lẽ… lẽ nào{\i0}
Dialogue: 0,0:18:46.46,0:18:48.13,Default,,0,0,0,,{\i1}là vì chuyện đó sao?{\i0}
Dialogue: 0,0:18:48.63,0:18:52.76,Default,,0,0,0,,{\i1}Suy cho cùng mọi người đều xem rồi,\Ncó mỗi mình cô ấy không nhìn rõ,{\i0}
Dialogue: 0,0:18:52.84,0:18:54.30,Default,,0,0,0,,{\i1}nên chắc chắn rất muốn xem.{\i0}
Dialogue: 0,0:18:55.80,0:19:00.81,Default,,0,0,0,,{\i1}Hơn nữa mình cũng đã\Nxem ảnh hồi nhỏ của Mie rồi.{\i0}
Dialogue: 0,0:19:00.89,0:19:02.85,Default,,0,0,0,,Chờ… chờ mình một lát.
Dialogue: 0,0:19:02.93,0:19:03.77,Default,,0,0,0,,Được.
Dialogue: 0,0:19:07.86,0:19:09.52,Default,,0,0,0,,Hình như mình để quên ở trường rồi.
Dialogue: 0,0:19:10.07,0:19:11.32,Default,,0,0,0,,Ảnh ở trường rồi.
Dialogue: 0,0:19:13.11,0:19:14.11,Default,,0,0,0,,Vậy sao?
Dialogue: 0,0:19:14.70,0:19:18.74,Default,,0,0,0,,{\i1}Vì mình không biết làm sao để đối diện\Nvới tài sản văn hóa quan trọng đó,{\i0}
Dialogue: 0,0:19:18.83,0:19:20.70,Default,,0,0,0,,{\i1}nên đã để nó ở đó.{\i0}
Dialogue: 0,0:19:22.33,0:19:24.25,Default,,0,0,0,,Ngày mai mình sẽ cho cậu xem.
Dialogue: 0,0:19:25.21,0:19:26.58,Default,,0,0,0,,Hay để mình đi lấy?
Dialogue: 0,0:19:28.04,0:19:29.92,Default,,0,0,0,,Không cần đâu.
Dialogue: 0,0:19:30.50,0:19:33.01,Default,,0,0,0,,Tại sao cậu lại ngã từ trên xà đơn xuống?
Dialogue: 0,0:19:33.09,0:19:35.63,Default,,0,0,0,,Vì… vì mình không lộn người lên được.
Dialogue: 0,0:19:36.18,0:19:37.64,Default,,0,0,0,,Giờ cậu làm được chưa?
Dialogue: 0,0:19:39.72,0:19:41.72,Default,,0,0,0,,Cũng… cũng không phải là không được.
Dialogue: 0,0:19:42.27,0:19:43.31,Default,,0,0,0,,Cho mình xem đi.
Dialogue: 0,0:19:44.98,0:19:47.85,Default,,0,0,0,,{\i1}Ai bảo mình nói dối chứ.{\i0}
Dialogue: 0,0:19:48.48,0:19:50.69,Default,,0,0,0,,{\i1}Thần linh ơi, xin hãy phù hộ con.{\i0}
Dialogue: 0,0:19:53.86,0:19:55.74,Default,,0,0,0,,Đừng bận tâm. Không sao đâu.
Dialogue: 0,0:19:55.82,0:19:57.11,Default,,0,0,0,,{\i1}Thần linh ơi!{\i0}
Dialogue: 0,0:19:57.78,0:20:00.41,Default,,0,0,0,,{\i1}Con không muốn\Ncô ấy nhìn thấy bộ dạng này của con.{\i0}
Dialogue: 0,0:20:01.70,0:20:02.58,Default,,0,0,0,,{\i1}Xin người.{\i0}
Dialogue: 0,0:20:03.41,0:20:04.41,Default,,0,0,0,,{\i1}Thần linh ơi.{\i0}
Dialogue: 0,0:20:06.00,0:20:08.42,Default,,0,0,0,,{\i1}Xin tôi đó, tôi ơi!{\i0}
Dialogue: 0,0:20:19.93,0:20:21.01,Default,,0,0,0,,Thành công rồi.
Dialogue: 0,0:20:23.43,0:20:24.31,Default,,0,0,0,,Cậu chụp…
Dialogue: 0,0:20:26.48,0:20:28.10,Default,,0,0,0,,Chờ chút, đừng cử động.
Dialogue: 0,0:20:34.15,0:20:35.19,Default,,0,0,0,,Chờ đã.
Dialogue: 0,0:20:35.69,0:20:38.11,Default,,0,0,0,,Mình sẽ gửi cho Komura sau.
Dialogue: 0,0:20:41.16,0:20:43.53,Default,,0,0,0,,Đừng cho người khác xem nhé.
Dialogue: 0,0:20:45.25,0:20:47.58,Default,,0,0,0,,{\i1}Tại sao lại làm chuyện này chứ?{\i0}
Dialogue: 0,0:20:48.92,0:20:52.17,Default,,0,0,0,,{\i1}Tại sao… lại nói lời như vậy chứ?{\i0}
Dialogue: 0,0:20:53.00,0:20:54.21,Default,,0,0,0,,Cầm giúp mình cái này.
Dialogue: 0,0:20:55.76,0:20:58.59,Default,,0,0,0,,Chắc mình không thể lộn ngược đâu nhỉ,
Dialogue: 0,0:20:59.34,0:21:01.59,Default,,0,0,0,,càng không thể lộn vòng vòng\Nnhư cánh trực thăng.
Dialogue: 0,0:21:11.15,0:21:12.65,Default,,0,0,0,,Quả nhiên là không được.
Dialogue: 0,0:21:14.82,0:21:17.36,Default,,0,0,0,,Hả? Mình có mặc quần bảo hộ phải không?
Dialogue: 0,0:21:18.74,0:21:20.49,Default,,0,0,0,,Không sao, có mà.
Dialogue: 0,0:21:21.24,0:21:22.28,Default,,0,0,0,,Tốt rồi.
Dialogue: 0,0:21:26.08,0:21:27.45,Default,,0,0,0,,Mũi cậu sao vậy?
Dialogue: 0,0:21:29.08,0:21:30.12,Default,,0,0,0,,Sao lại như vậy?
Dialogue: 0,0:21:31.54,0:21:32.42,Default,,0,0,0,,Không.
Dialogue: 0,0:21:32.50,0:21:33.33,Default,,0,0,0,,Xin lỗi.
Dialogue: 0,0:21:34.00,0:21:35.38,Default,,0,0,0,,{\i1}Kể từ hôm đó,{\i0}
Dialogue: 0,0:21:35.46,0:21:37.71,Default,,0,0,0,,{\i1}trong ký ức của tôi, xà đơn và máu mũi{\i0}
Dialogue: 0,0:21:37.80,0:21:39.51,Default,,0,0,0,,{\i1}không bao giờ tách rời nữa.{\i0}
Dialogue: 0,0:23:11.06,0:23:12.27,Default,,0,0,0,,{\i1}Tôi là Komura Kaede.{\i0}
Dialogue: 0,0:23:12.93,0:23:15.06,Default,,0,0,0,,{\i1}Đây là lần giới thiệu tập sau\Ncuối cùng rồi.{\i0}
Dialogue: 0,0:23:15.77,0:23:20.73,Default,,0,0,0,,{\i1}Có một ngày,\NMie bắt gặp bạn cùng lớp hồi tiểu học,{\i0}
Dialogue: 0,0:23:20.82,0:23:25.53,Default,,0,0,0,,{\i1}nhưng Mie không nhớ mặt bạn đó.{\i0}
Dialogue: 0,0:23:26.11,0:23:29.70,Default,,0,0,0,,{\i1}Komura thầm nghĩ: "Có phải có ngày\Ncô ấy cũng sẽ quên mặt mình không",{\i0}
Dialogue: 0,0:23:29.78,0:23:32.79,Default,,0,0,0,,{\i1}vậy nên đã lấy hết dũng khí.{\i0}
Dialogue: 0,0:23:33.41,0:23:36.33,Default,,0,0,0,,{\i1}Tập sau: "Ước hẹn với cô gái mình thích".{\i0}
Dialogue: 0,0:23:37.38,0:23:39.17,Default,,0,0,0,,{\i1}Mình hoàn thành phần giới thiệu rồi!{\i0}
