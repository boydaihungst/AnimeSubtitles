Dialogue: 0,0:00:01.00,0:00:03.17,Default,,0,0,0,,{\i1}Kỷ niệm thành lập trường\Nsắp đến rồi phải không?{\i0}
Dialogue: 0,0:00:03.75,0:00:06.72,Default,,0,0,0,,Con có muốn\Nnhân cơ hội này xỏ khuyên tai không?
Dialogue: 0,0:00:06.80,0:00:07.68,Default,,0,0,0,,Tại sao?
Dialogue: 0,0:00:07.76,0:00:11.18,Default,,0,0,0,,Vì hiếm có cơ hội để thể hiện mà.
Dialogue: 0,0:00:11.26,0:00:13.60,Default,,0,0,0,,Con đâu có lên biểu diễn.
Dialogue: 0,0:00:14.18,0:00:16.68,Default,,0,0,0,,Chẳng phải con đã nói\Ncái này không hợp với con sao?
Dialogue: 0,0:00:16.77,0:00:19.15,Default,,0,0,0,,Tóc con cũng là vì mẹ bảo đẹp\Nnên con mới nhuộm,
Dialogue: 0,0:00:19.23,0:00:20.86,Default,,0,0,0,,rốt cuộc lại chẳng hợp với con.
Dialogue: 0,0:00:20.94,0:00:22.69,Default,,0,0,0,,Hợp lắm mà.
Dialogue: 0,0:00:22.77,0:00:24.57,Default,,0,0,0,,Sao con lại tự ti vậy?
Dialogue: 0,0:00:24.65,0:00:27.07,Default,,0,0,0,,Tự tin vào bản thân một chút đi.
Dialogue: 0,0:00:27.15,0:00:28.61,Default,,0,0,0,,{\i1}Tóm lại con không xỏ khuyên đâu.{\i0}
Dialogue: 0,0:00:32.74,0:00:36.00,Default,,0,0,0,,{\i1}Tôi nghĩ kiểu người\Nphù hợp với phong cách đó{\i0}
Dialogue: 0,0:00:36.08,0:00:39.00,Default,,0,0,0,,{\i1}phải là kiểu người cởi mở như Someya,{\i0}
Dialogue: 0,0:00:39.08,0:00:41.50,Default,,0,0,0,,{\i1}hoặc đẹp trai như Azuma.{\i0}
Dialogue: 0,0:00:41.58,0:00:45.09,Default,,0,0,0,,{\i1}Khuyên tai không hợp với tôi chút nào.{\i0}
Dialogue: 0,0:00:45.17,0:00:47.21,Default,,0,0,0,,{\i1}Tôi sẽ xấu hổ tới mức quỳ xuống mất.{\i0}
Dialogue: 0,0:00:51.55,0:00:53.18,Default,,0,0,0,,Mie?
Dialogue: 0,0:00:53.26,0:00:54.97,Default,,0,0,0,,Mau đứng dậy nào!
Dialogue: 0,0:02:25.77,0:02:28.32,Default,,0,0,0,,{\an8}Chào buổi sáng, Komura.
Dialogue: 0,0:02:28.40,0:02:30.23,Default,,0,0,0,,{\an8}Cậu… cậu bị sao vậy?
Dialogue: 0,0:02:30.32,0:02:31.65,Default,,0,0,0,,Có chuyện gì à?
Dialogue: 0,0:02:31.74,0:02:33.57,Default,,0,0,0,,Mình làm rơi đồ.
Dialogue: 0,0:02:34.74,0:02:37.37,Default,,0,0,0,,Vì nó nhỏ quá nên mình không tìm thấy.
Dialogue: 0,0:02:37.45,0:02:39.12,Default,,0,0,0,,Ra… ra vậy.
Dialogue: 0,0:02:40.16,0:02:41.45,Default,,0,0,0,,Cậu làm rơi gì vậy?
Dialogue: 0,0:02:42.16,0:02:43.58,Default,,0,0,0,,Cái đó…
Dialogue: 0,0:02:44.83,0:02:45.71,Default,,0,0,0,,Tìm thấy rồi.
Dialogue: 0,0:02:46.42,0:02:48.38,Default,,0,0,0,,Vậy thì… tốt.
Dialogue: 0,0:02:51.80,0:02:52.88,Default,,0,0,0,,{\i1}Khuyên tai?{\i0}
Dialogue: 0,0:02:53.63,0:02:55.80,Default,,0,0,0,,Xin lỗi vì làm cậu giật mình.
Dialogue: 0,0:02:55.89,0:02:56.76,Default,,0,0,0,,Không đâu.
Dialogue: 0,0:02:57.43,0:03:00.31,Default,,0,0,0,,{\i1}Chà… mình nhìn nhầm sao?{\i0}
Dialogue: 0,0:03:00.39,0:03:03.73,Default,,0,0,0,,{\i1}Suy cho cùng mình cũng chưa thấy\NMie đeo khuyên tai bao giờ.{\i0}
Dialogue: 0,0:03:04.98,0:03:06.40,Default,,0,0,0,,{\i1}Cô ấy có xỏ khuyên sao?{\i0}
Dialogue: 0,0:03:06.90,0:03:09.65,Default,,0,0,0,,{\i1}Không, sao có thể?{\i0}
Dialogue: 0,0:03:09.73,0:03:11.90,Default,,0,0,0,,{\i1}Cái đó dù không phải là không hợp,{\i0}
Dialogue: 0,0:03:11.98,0:03:12.82,Default,,0,0,0,,{\i1}nhưng thấy…{\i0}
Dialogue: 0,0:03:12.90,0:03:15.07,Default,,0,0,0,,Được rồi, tất cả về chỗ.
Dialogue: 0,0:03:16.16,0:03:18.70,Default,,0,0,0,,Cậu… muốn xem cùng không?
Dialogue: 0,0:03:18.78,0:03:20.53,Default,,0,0,0,,Có, cảm ơn cậu.
Dialogue: 0,0:03:20.62,0:03:23.00,Default,,0,0,0,,{\i1}Mie đeo khuyên tai…{\i0}
Dialogue: 0,0:03:26.08,0:03:26.96,Default,,0,0,0,,{\i1}Cứ thấy…{\i0}
Dialogue: 0,0:03:28.04,0:03:30.00,Default,,0,0,0,,{\i1}nửa đúng nửa sai sao sao đó.{\i0}
Dialogue: 0,0:03:33.59,0:03:35.93,Default,,0,0,0,,Được rồi, bắt đầu học nhé.
Dialogue: 0,0:03:36.93,0:03:38.76,Default,,0,0,0,,Ta ôn lại nội dung lần trước.
Dialogue: 0,0:03:38.84,0:03:41.06,Default,,0,0,0,,{\i1}Xem ra cô ấy chưa từng xỏ khuyên.{\i0}
Dialogue: 0,0:03:41.14,0:03:43.43,Default,,0,0,0,,{\i1}Quả nhiên mình nghĩ nhiều rồi.{\i0}
Dialogue: 0,0:03:44.02,0:03:44.98,Default,,0,0,0,,{\i1}Hay là{\i0}
Dialogue: 0,0:03:45.06,0:03:47.27,Default,,0,0,0,,{\i1}nhìn thế này thì nhìn không ra?{\i0}
Dialogue: 0,0:03:48.23,0:03:49.81,Default,,0,0,0,,Nè, chỗ này…
Dialogue: 0,0:03:51.65,0:03:53.36,Default,,0,0,0,,Cậu không nhìn được sách giáo khoa à?
Dialogue: 0,0:03:53.44,0:03:54.40,Default,,0,0,0,,Xin lỗi nhé.
Dialogue: 0,0:03:54.49,0:03:57.11,Default,,0,0,0,,Không có gì, người phải xin lỗi là mình.
Dialogue: 0,0:03:57.20,0:03:58.03,Default,,0,0,0,,Thật sự xin lỗi.
Dialogue: 0,0:03:58.61,0:03:59.62,Default,,0,0,0,,{\i1}Đúng vậy.{\i0}
Dialogue: 0,0:03:59.70,0:04:02.12,Default,,0,0,0,,{\i1}Chỉ hơi khác với ấn tượng của mình thôi.{\i0}
Dialogue: 0,0:04:02.62,0:04:04.54,Default,,0,0,0,,{\i1}Chuyện Mie xỏ khuyên tai{\i0}
Dialogue: 0,0:04:04.62,0:04:07.08,Default,,0,0,0,,{\i1}sẽ không làm mình mất vui hay gì đâu.{\i0}
Dialogue: 0,0:04:08.75,0:04:11.96,Default,,0,0,0,,{\i1}Cảm giác cả ngày hôm nay\Nchỉ nghĩ mỗi chuyện này.{\i0}
Dialogue: 0,0:04:12.04,0:04:13.55,Default,,0,0,0,,{\i1}Mau bình tĩnh lại đi, tôi ơi!{\i0}
Dialogue: 0,0:04:13.63,0:04:15.63,Default,,0,0,0,,Komura, xem này.
Dialogue: 0,0:04:17.51,0:04:18.34,Default,,0,0,0,,Khuyên tai.
Dialogue: 0,0:04:22.76,0:04:23.89,Default,,0,0,0,,Là hạt thôi.
Dialogue: 0,0:04:26.77,0:04:29.10,Default,,0,0,0,,Mình không xỏ khuyên.
Dialogue: 0,0:04:30.23,0:04:32.31,Default,,0,0,0,,Sáng nay cậu làm mất hạt này sao?
Dialogue: 0,0:04:32.40,0:04:33.40,Default,,0,0,0,,Ừ.
Dialogue: 0,0:04:33.98,0:04:36.65,Default,,0,0,0,,Hạt để làm gì vậy?
Dialogue: 0,0:04:36.74,0:04:37.65,Default,,0,0,0,,Làm mắt.
Dialogue: 0,0:04:37.74,0:04:39.15,Default,,0,0,0,,À, mắt à.
Dialogue: 0,0:04:39.24,0:04:40.16,Default,,0,0,0,,Mắt?
Dialogue: 0,0:04:41.99,0:04:43.24,Default,,0,0,0,,Chính là cái này.
Dialogue: 0,0:04:43.33,0:04:45.79,Default,,0,0,0,,Để triển lãm\Ntại lễ kỷ niệm thành lập trường.
Dialogue: 0,0:04:46.45,0:04:47.54,Default,,0,0,0,,{\i1}Là con bạch tuộc sao?{\i0}
Dialogue: 0,0:04:47.62,0:04:49.87,Default,,0,0,0,,Dù thế này cũng rất dễ thương,
Dialogue: 0,0:04:50.87,0:04:53.84,Default,,0,0,0,,nhưng mình nghĩ\Nthêm mắt vào chắc sẽ dễ thương hơn.
Dialogue: 0,0:04:54.88,0:04:59.22,Default,,0,0,0,,{\i1}Thích rất nhiều thứ,\Nchú tâm vào suy nghĩ từng thứ.{\i0}
Dialogue: 0,0:04:59.30,0:05:02.18,Default,,0,0,0,,{\i1}Chính vì vậy mà nhìn Mie mới tỏa sáng.{\i0}
Dialogue: 0,0:05:02.76,0:05:04.31,Default,,0,0,0,,{\i1}Nhìn lại mình,{\i0}
Dialogue: 0,0:05:04.39,0:05:07.52,Default,,0,0,0,,{\i1}mỗi khi được yêu cầu dùng len và cotton\Nđể làm thứ mình thích,{\i0}
Dialogue: 0,0:05:07.60,0:05:09.73,Default,,0,0,0,,{\i1}thì chỉ làm mỗi quả bóng.{\i0}
Dialogue: 0,0:05:09.81,0:05:12.31,Default,,0,0,0,,{\i1}Người trống rỗng vô vị như mình{\i0}
Dialogue: 0,0:05:12.40,0:05:16.15,Default,,0,0,0,,{\i1}không phải kiểu người\Nhợp đeo khuyên hay nhuộm tóc.{\i0}
Dialogue: 0,0:05:18.32,0:05:21.91,Default,,0,0,0,,Xỏ khuyên là dùng kim để xỏ sao?
Dialogue: 0,0:05:23.12,0:05:25.53,Default,,0,0,0,,Đừng đưa mặt lại gần như vậy.
Dialogue: 0,0:05:25.62,0:05:27.37,Default,,0,0,0,,Chắc là dùng súng bấm lỗ tai.
Dialogue: 0,0:05:27.91,0:05:29.08,Default,,0,0,0,,Ra là vậy.
Dialogue: 0,0:05:29.66,0:05:31.71,Default,,0,0,0,,Mình thấy khuyên tai rất dễ thương,
Dialogue: 0,0:05:31.79,0:05:33.83,Default,,0,0,0,,nhưng xỏ lỗ đeo khuyên tai sợ lắm.
Dialogue: 0,0:05:33.92,0:05:35.79,Default,,0,0,0,,Phải.
Dialogue: 0,0:05:35.88,0:05:38.26,Default,,0,0,0,,Mọi người ở nhà\Ncũng hay bảo mình xỏ khuyên,
Dialogue: 0,0:05:38.34,0:05:39.59,Default,,0,0,0,,nhưng vẫn thấy hơi đáng sợ.
Dialogue: 0,0:05:40.47,0:05:44.09,Default,,0,0,0,,Không phải, tại cũng không biết\Ncó hợp với mình không mà.
Dialogue: 0,0:05:45.97,0:05:47.43,Default,,0,0,0,,Sao…
Dialogue: 0,0:05:53.56,0:05:55.40,Default,,0,0,0,,Hình như hơi ngầu đó.
Dialogue: 0,0:06:00.78,0:06:03.28,Default,,0,0,0,,Nhưng giờ mình nhìn không rõ,
Dialogue: 0,0:06:03.36,0:06:05.03,Default,,0,0,0,,nên cũng không chắc lắm.
Dialogue: 0,0:06:14.46,0:06:17.04,Default,,0,0,0,,{\i1}Bình tĩnh chút đi!{\i0}
Dialogue: 0,0:06:17.67,0:06:19.09,Default,,0,0,0,,{\i1}Mình không hợp!{\i0}
Dialogue: 0,0:06:19.76,0:06:22.09,Default,,0,0,0,,{\i1}Chẳng ngầu chút nào.{\i0}
Dialogue: 0,0:06:22.17,0:06:26.05,Default,,0,0,0,,{\i1}Không được rồi! Chỉ vì một câu nói của Mie\Nmà khiến mình thấy không gì là không thể,{\i0}
Dialogue: 0,0:06:26.14,0:06:28.81,Default,,0,0,0,,{\i1}khiến mình có tự tin làm bất cứ việc gì.{\i0}
Dialogue: 0,0:06:31.39,0:06:33.94,Default,,0,0,0,,{\i1}Vì sắp đến kỷ niệm thành lập trường,{\i0}
Dialogue: 0,0:06:34.02,0:06:36.56,Default,,0,0,0,,{\i1}công đoạn chuẩn bị cũng sắp đến hồi kết.{\i0}
Dialogue: 0,0:06:36.65,0:06:38.57,Default,,0,0,0,,Đã 6:00 rồi.
Dialogue: 0,0:06:40.03,0:06:43.36,Default,,0,0,0,,Dù rất muốn làm xong trong hôm nay…
Dialogue: 0,0:06:43.45,0:06:46.41,Default,,0,0,0,,Giờ giới nghiêm của mình là 6:00, nên…
Dialogue: 0,0:06:46.49,0:06:47.45,Default,,0,0,0,,Mình biết.
Dialogue: 0,0:06:47.53,0:06:49.83,Default,,0,0,0,,Có muốn thử đi quá giờ giới nghiêm không?
Dialogue: 0,0:06:49.91,0:06:51.66,Default,,0,0,0,,Không đâu, sợ lắm.
Dialogue: 0,0:06:51.75,0:06:55.21,Default,,0,0,0,,{\i1}Bố mẹ Mie\Ncó vẻ quản thúc chuyện này rất nghiêm.{\i0}
Dialogue: 0,0:06:55.29,0:06:56.96,Default,,0,0,0,,Liệu cậu có bị phạt gì không?
Dialogue: 0,0:06:57.04,0:07:00.21,Default,,0,0,0,,Xem nào, trước tiên họ sẽ tức giận.
Dialogue: 0,0:07:00.88,0:07:05.01,Default,,0,0,0,,Đáng sợ hơn là sáng hôm sau\Nsẽ không có ca cao nóng nữa.
Dialogue: 0,0:07:05.09,0:07:07.01,Default,,0,0,0,,{\i1}Vậy thì hỏng rồi.{\i0}
Dialogue: 0,0:07:11.39,0:07:14.02,Default,,0,0,0,,Hình như vẫn còn chút việc phải làm.
Dialogue: 0,0:07:14.10,0:07:17.52,Default,,0,0,0,,Bạn nào ở được đến 7:00 tối giơ tay nhé.
Dialogue: 0,0:07:18.23,0:07:19.52,Default,,0,0,0,,- Mình.\N- Mình.
Dialogue: 0,0:07:19.61,0:07:21.57,Default,,0,0,0,,{\i1}Dù sao nhà mình cũng ở rất gần.{\i0}
Dialogue: 0,0:07:21.65,0:07:22.57,Default,,0,0,0,,Cảm ơn các cậu.
Dialogue: 0,0:07:22.65,0:07:25.40,Default,,0,0,0,,Mau hoàn thành nốt chỗ này thôi.
Dialogue: 0,0:07:26.24,0:07:27.49,Default,,0,0,0,,Đúng rồi, Komura.
Dialogue: 0,0:07:28.49,0:07:30.58,Default,,0,0,0,,Cậu với Mie đã hôn chưa?
Dialogue: 0,0:07:30.66,0:07:33.04,Default,,0,0,0,,{\i1}Cậu ấy vẫn nói chuyện này.{\i0}
Dialogue: 0,0:07:33.62,0:07:36.08,Default,,0,0,0,,- Cái đó…\N- Có tiến triển phải nói cho mình nhé.
Dialogue: 0,0:07:36.17,0:07:38.33,Default,,0,0,0,,Mình tuyệt đối\Nkhông nói cho người khác đâu.
Dialogue: 0,0:07:41.84,0:07:42.84,Default,,0,0,0,,Sao vậy, Mie?
Dialogue: 0,0:07:42.92,0:07:46.76,Default,,0,0,0,,{\i1}Không lẽ cô ấy đã nghe thấy chuyện hôn?{\i0}
Dialogue: 0,0:07:46.84,0:07:48.47,Default,,0,0,0,,Mình… hôm nay…
Dialogue: 0,0:07:49.34,0:07:52.72,Default,,0,0,0,,Hôm nay mình có thể ở đến 7:00.
Dialogue: 0,0:07:52.81,0:07:55.10,Default,,0,0,0,,Đây là để chuẩn bị\Ncho kỷ niệm thành lập trường mà.
Dialogue: 0,0:07:55.64,0:07:57.39,Default,,0,0,0,,Thật sao? Tốt quá rồi.
Dialogue: 0,0:07:57.48,0:07:59.19,Default,,0,0,0,,Cảm ơn cậu rất nhiều.
Dialogue: 0,0:08:00.44,0:08:02.32,Default,,0,0,0,,{\i1}Sao cứ thấy cô ấy kỳ lạ nhỉ.{\i0}
Dialogue: 0,0:08:02.94,0:08:04.57,Default,,0,0,0,,{\i1}Thật sự không sao ư?{\i0}
Dialogue: 0,0:08:05.11,0:08:08.95,Default,,0,0,0,,{\i1}Nhưng vì lý do gì\Nmà cô ấy chấp nhận nói dối để ở lại?{\i0}
Dialogue: 0,0:08:11.03,0:08:12.83,Default,,0,0,0,,{\i1}Vì muốn ở lại cùng mình sao?{\i0}
Dialogue: 0,0:08:15.83,0:08:17.71,Default,,0,0,0,,Komura, cậu sao vậy?
Dialogue: 0,0:08:17.79,0:08:19.29,Default,,0,0,0,,Không, chỉ là…
Dialogue: 0,0:08:20.29,0:08:21.96,Default,,0,0,0,,mình muốn tỉnh táo một chút.
Dialogue: 0,0:08:22.04,0:08:23.21,Default,,0,0,0,,Cậu buồn ngủ rồi sao?
Dialogue: 0,0:08:23.30,0:08:25.30,Default,,0,0,0,,{\i1}Dù không được\Nuống ca cao nóng vào buổi sáng,{\i0}
Dialogue: 0,0:08:25.38,0:08:27.93,Default,,0,0,0,,{\i1}dù khiến bố mẹ tức giận\Ncũng muốn ở bên mình.{\i0}
Dialogue: 0,0:08:28.01,0:08:29.72,Default,,0,0,0,,{\i1}Làm gì có chuyện cô ấy nghĩ như vậy.{\i0}
Dialogue: 0,0:08:30.30,0:08:32.60,Default,,0,0,0,,{\i1}Dạo này có phải\Nmình đắc ý thái quá rồi không?{\i0}
Dialogue: 0,0:08:33.18,0:08:36.43,Default,,0,0,0,,Vậy bên này giao cho hai người nhé.
Dialogue: 0,0:08:41.40,0:08:44.73,Default,,0,0,0,,Chúng… chúng ta bày tác phẩm\Nvới bảng tên ra đi.
Dialogue: 0,0:08:45.23,0:08:46.07,Default,,0,0,0,,Ừ.
Dialogue: 0,0:08:53.16,0:08:54.54,Default,,0,0,0,,Giờ là mấy giờ rồi?
Dialogue: 0,0:08:54.62,0:08:56.87,Default,,0,0,0,,Vừa đến 6:00.
Dialogue: 0,0:08:57.87,0:08:59.79,Default,,0,0,0,,Mie, cậu không sao chứ?
Dialogue: 0,0:09:01.92,0:09:05.67,Default,,0,0,0,,Mình… Lần đầu tiên\Nmình ở lại trường muộn như vậy,
Dialogue: 0,0:09:05.75,0:09:07.34,Default,,0,0,0,,nên hơi căng thẳng.
Dialogue: 0,0:09:07.42,0:09:10.76,Default,,0,0,0,,{\i1}Hóa ra… là vậy sao?{\i0}
Dialogue: 0,0:09:10.84,0:09:12.59,Default,,0,0,0,,{\i1}Phải mau chóng hoàn thành mới được.{\i0}
Dialogue: 0,0:09:18.68,0:09:19.85,Default,,0,0,0,,{\i1}Mie.{\i0}
Dialogue: 0,0:09:19.94,0:09:21.35,Default,,0,0,0,,{\i1}Cô ấy mất 30 phút{\i0}
Dialogue: 0,0:09:21.44,0:09:23.40,Default,,0,0,0,,{\i1}mới có thể coi là bày xong ba tác phẩm.{\i0}
Dialogue: 0,0:09:24.69,0:09:28.36,Default,,0,0,0,,{\i1}Quả… quả nhiên vẫn nên bảo cô ấy về thôi.{\i0}
Dialogue: 0,0:09:28.99,0:09:31.36,Default,,0,0,0,,{\i1}Nhưng chính cô ấy đã nói là không sao rồi,{\i0}
Dialogue: 0,0:09:31.45,0:09:32.95,Default,,0,0,0,,{\i1}qua nhắc cô ấy liệu có ổn không?{\i0}
Dialogue: 0,0:09:35.37,0:09:38.50,Default,,0,0,0,,{\i1}Kìa, đó là di động của Mie phải không?{\i0}
Dialogue: 0,0:09:39.58,0:09:41.00,Default,,0,0,0,,{\i1}Rơi xuống đất rồi.{\i0}
Dialogue: 0,0:09:43.46,0:09:44.42,Default,,0,0,0,,BA CUỘC GỌI NHỠ
Dialogue: 0,0:09:44.50,0:09:45.88,Default,,0,0,0,,MẸ\NCON ĐANG LÀM GÌ VẬY, AI!
Dialogue: 0,0:09:45.96,0:09:46.88,Default,,0,0,0,,Cái này…
Dialogue: 0,0:09:51.47,0:09:53.09,Default,,0,0,0,,Komura đi đâu rồi?
Dialogue: 0,0:09:55.68,0:09:57.06,Default,,0,0,0,,Cậu ấy đâu rồi nhỉ?
Dialogue: 0,0:09:57.14,0:09:58.14,Default,,0,0,0,,Về rồi sao?
Dialogue: 0,0:10:18.24,0:10:20.50,Default,,0,0,0,,Asuka. Xin lỗi, mình phải về rồi.
Dialogue: 0,0:10:20.58,0:10:21.71,Default,,0,0,0,,Mình biết rồi.
Dialogue: 0,0:10:21.79,0:10:22.75,Default,,0,0,0,,Tạm biệt.
Dialogue: 0,0:10:22.83,0:10:24.00,Default,,0,0,0,,Đi về cẩn thận nhé.
Dialogue: 0,0:10:32.01,0:10:35.26,Default,,0,0,0,,Nè, cái này để đâu?
Dialogue: 0,0:10:35.34,0:10:36.43,Default,,0,0,0,,Cái này…
Dialogue: 0,0:10:39.64,0:10:41.35,Default,,0,0,0,,{\i1}Đuổi theo thì làm được gì?{\i0}
Dialogue: 0,0:10:41.89,0:10:44.35,Default,,0,0,0,,{\i1}Giờ mình không thể làm gì nữa rồi,\Nkhông phải sao?{\i0}
Dialogue: 0,0:10:47.31,0:10:49.90,Default,,0,0,0,,{\i1}Cô ấy không tìm được tủ giày của mình!{\i0}
Dialogue: 0,0:10:50.90,0:10:53.03,Default,,0,0,0,,{\i1}Chắc là cô ấy đã mở cái kia,{\i0}
Dialogue: 0,0:10:53.11,0:10:54.91,Default,,0,0,0,,{\i1}giống vị trí hồi năm hai.{\i0}
Dialogue: 0,0:10:55.41,0:10:58.45,Default,,0,0,0,,{\i1}Sau đó cô ấy bắt đầu bối rối thì phải.{\i0}
Dialogue: 0,0:10:58.53,0:11:00.33,Default,,0,0,0,,{\i1}Cậu bình tĩnh lại nào.{\i0}
Dialogue: 0,0:11:01.54,0:11:03.58,Default,,0,0,0,,{\i1}Cô ấy không tìm nữa,\Nđi luôn giày thể thao về?{\i0}
Dialogue: 0,0:11:07.42,0:11:09.63,Default,,0,0,0,,{\i1}Mình… mình phải đem giày về cho cô ấy.{\i0}
Dialogue: 0,0:11:10.75,0:11:13.01,Default,,0,0,0,,{\i1}Giày của Mie giống giày của mình,{\i0}
Dialogue: 0,0:11:13.09,0:11:16.18,Default,,0,0,0,,{\i1}nên Mie không cẩn thận\Nđi nhầm giày của mình.{\i0}
Dialogue: 0,0:11:17.05,0:11:18.85,Default,,0,0,0,,{\i1}Trước đây đã xảy ra chuyện như vậy.{\i0}
Dialogue: 0,0:11:19.39,0:11:22.27,Default,,0,0,0,,{\i1}Mie vẫn đi đôi giày này.{\i0}
Dialogue: 0,0:11:23.68,0:11:26.60,Default,,0,0,0,,{\i1}Không, chẳng phải\Nmình cần đem giày đến cho cô ấy sao?{\i0}
Dialogue: 0,0:11:26.69,0:11:28.77,Default,,0,0,0,,{\i1}Tại sao cứ đi theo sau cô ấy vậy?{\i0}
Dialogue: 0,0:11:29.27,0:11:32.94,Default,,0,0,0,,{\i1}Chỉ… chỉ cần nói\Ncũng đúng lúc mình về nhà,{\i0}
Dialogue: 0,0:11:33.03,0:11:35.20,Default,,0,0,0,,{\i1}có thể dùng lý do đó\Nđể tình cờ gặp cô ấy mà.{\i0}
Dialogue: 0,0:12:09.81,0:12:11.44,Default,,0,0,0,,{\i1}Để mai đưa cô ấy vậy.{\i0}
Dialogue: 0,0:12:12.94,0:12:14.15,Default,,0,0,0,,{\i1}Ngày mai,{\i0}
Dialogue: 0,0:12:14.23,0:12:16.19,Default,,0,0,0,,{\i1}vì cô ấy đã làm mẹ tức giận,{\i0}
Dialogue: 0,0:12:16.28,0:12:18.32,Default,,0,0,0,,{\i1}nên buổi sáng\Nsẽ không được uống ca cao nóng.{\i0}
Dialogue: 0,0:12:18.86,0:12:20.66,Default,,0,0,0,,{\i1}Mie của ngày mai{\i0}
Dialogue: 0,0:12:20.74,0:12:22.41,Default,,0,0,0,,{\i1}chắc chắn sẽ không có tinh thần gì.{\i0}
Dialogue: 0,0:12:26.54,0:12:28.79,Default,,0,0,0,,{\i1}Sao muộn vậy mới về?{\i0}
Dialogue: 0,0:12:28.87,0:12:30.13,Default,,0,0,0,,{\i1}Cũng chẳng gọi cho mẹ.{\i0}
Dialogue: 0,0:12:30.79,0:12:32.04,Default,,0,0,0,,Con xin lỗi.
Dialogue: 0,0:12:32.13,0:12:33.84,Default,,0,0,0,,Tóm lại, đi ăn trước đã.
Dialogue: 0,0:12:38.88,0:12:41.55,Default,,0,0,0,,Mẹ ra mở cửa, con vào trước đi.
Dialogue: 0,0:12:43.76,0:12:44.81,Default,,0,0,0,,Chào cô.
Dialogue: 0,0:12:46.93,0:12:51.10,Default,,0,0,0,,Làm phiền cô ạ,\Ncháu là bạn cùng lớp của Mie.
Dialogue: 0,0:12:52.52,0:12:53.90,Default,,0,0,0,,Là bạn con à?
Dialogue: 0,0:12:53.98,0:12:55.65,Default,,0,0,0,,Là… Komura.
Dialogue: 0,0:12:56.82,0:12:59.91,Default,,0,0,0,,Cái này là giày của Mie.
Dialogue: 0,0:13:00.53,0:13:02.82,Default,,0,0,0,,Cháu vô tình đi nhầm\Ngiày của bạn ấy về nhà,
Dialogue: 0,0:13:03.33,0:13:05.20,Default,,0,0,0,,vì giày của bọn cháu giống nhau,
Dialogue: 0,0:13:05.29,0:13:06.33,Default,,0,0,0,,vậy nên…
Dialogue: 0,0:13:06.41,0:13:08.16,Default,,0,0,0,,Xin lỗi, Mie.
Dialogue: 0,0:13:08.66,0:13:12.29,Default,,0,0,0,,Có phải cậu vì chuyện này\Nmới về trễ vậy không?
Dialogue: 0,0:13:12.38,0:13:13.71,Default,,0,0,0,,Vì không tìm thấy giày.
Dialogue: 0,0:13:16.51,0:13:20.30,Default,,0,0,0,,Không, không phải vậy.
Dialogue: 0,0:13:21.26,0:13:23.30,Default,,0,0,0,,Vậy… vậy sao?
Dialogue: 0,0:13:24.05,0:13:25.81,Default,,0,0,0,,Vậy mình về đây.
Dialogue: 0,0:13:26.35,0:13:27.27,Default,,0,0,0,,Mai gặp nhé.
Dialogue: 0,0:13:29.10,0:13:30.27,Default,,0,0,0,,Cháu chào cô.
Dialogue: 0,0:13:32.60,0:13:35.32,Default,,0,0,0,,Vậy nên con mới đi giày thể thao về nhà ư?
Dialogue: 0,0:13:36.44,0:13:38.69,Default,,0,0,0,,Bỏ đi, vào ăn cơm nào.
Dialogue: 0,0:13:45.95,0:13:48.83,Default,,0,0,0,,{\i1}Cứ như vậy chạy vô nhà cô ấy,\Nchắc đã làm phiền cô ấy rồi.{\i0}
Dialogue: 0,0:13:49.33,0:13:51.08,Default,,0,0,0,,{\i1}Lúc nãy đúng là vô cùng đáng ngờ.{\i0}
Dialogue: 0,0:13:52.12,0:13:53.00,Default,,0,0,0,,{\i1}Mẹ cô ấy…{\i0}
Dialogue: 0,0:13:53.54,0:13:54.38,Default,,0,0,0,,{\i1}đẹp quá.{\i0}
Dialogue: 0,0:13:55.96,0:13:57.55,Default,,0,0,0,,{\i1}Xin lỗi Mie,{\i0}
Dialogue: 0,0:13:57.63,0:13:58.46,Default,,0,0,0,,{\i1}mình…{\i0}
Dialogue: 0,0:13:59.05,0:14:01.47,Default,,0,0,0,,{\i1}Ngày mai mình muốn\Nnhìn thấy một Mie hào hứng.{\i0}
Dialogue: 0,0:14:03.51,0:14:04.59,Default,,0,0,0,,{\i1}Ích kỷ quá.{\i0}
Dialogue: 0,0:14:06.30,0:14:08.10,Default,,0,0,0,,{\i1}Ích kỷ quá đi mất.{\i0}
Dialogue: 0,0:14:15.86,0:14:17.90,Default,,0,0,0,,Komura, chào buổi sáng.
Dialogue: 0,0:14:20.49,0:14:22.07,Default,,0,0,0,,Chào… chào buổi sáng.
Dialogue: 0,0:14:23.32,0:14:24.61,Default,,0,0,0,,Cậu… cậu có đeo kính à.
Dialogue: 0,0:14:26.16,0:14:28.66,Default,,0,0,0,,Hôm nay mình suýt quên.
Dialogue: 0,0:14:28.74,0:14:31.33,Default,,0,0,0,,Vì lúc uống ca cao nóng mình bỏ kính ra.
Dialogue: 0,0:14:34.79,0:14:35.96,Default,,0,0,0,,Vậy… vậy sao?
Dialogue: 0,0:14:43.47,0:14:45.18,Default,,0,0,0,,{\i1}Cô ấy có vẻ vui vẻ, tốt rồi.{\i0}
Dialogue: 0,0:14:45.80,0:14:48.01,Default,,0,0,0,,{\i1}Mình đã không gây rắc rối cho cô ấy,\Ntốt quá rồi.{\i0}
Dialogue: 0,0:14:48.60,0:14:51.89,Default,,0,0,0,,{\i1}Không bị hiểu nhầm là kẻ bám đuôi,\Nthật sự tốt quá rồi.{\i0}
Dialogue: 0,0:14:52.89,0:14:55.31,Default,,0,0,0,,{\i1}Những chuyện xảy ra gần đây,\Nchuyện thứ nhất.{\i0}
Dialogue: 0,0:14:55.40,0:14:59.82,Default,,0,0,0,,{\i1}Ở phòng tắm có một chiếc máy gắp thú bông\Ncó thể gắp được thiên thần biển.{\i0}
Dialogue: 0,0:14:59.90,0:15:02.86,Default,,0,0,0,,{\i1}Mình thích cả trò gắp thú lẫn thú bông đó\Nnên nghiện luôn,{\i0}
Dialogue: 0,0:15:02.94,0:15:05.57,Default,,0,0,0,,{\i1}tiêu hết không biết\Nbao nhiêu tiền tiêu vặt.{\i0}
Dialogue: 0,0:15:05.66,0:15:10.83,Default,,0,0,0,,{\i1}Mình ngộ ra quá chìm đắm vào một việc\Nmà bỏ quên những chuyện khác là không tốt.{\i0}
Dialogue: 0,0:15:11.49,0:15:13.33,Default,,0,0,0,,{\i1}Hơi lan man nhỉ.{\i0}
Dialogue: 0,0:15:14.04,0:15:15.75,Default,,0,0,0,,Cậu nhìn gì chằm chằm vậy?
Dialogue: 0,0:15:15.83,0:15:17.46,Default,,0,0,0,,Không… không có gì.
Dialogue: 0,0:15:17.54,0:15:20.71,Default,,0,0,0,,Mie đúng là kỳ quặc thật.
Dialogue: 0,0:15:21.34,0:15:23.01,Default,,0,0,0,,Chắc vậy.
Dialogue: 0,0:15:24.05,0:15:28.30,Default,,0,0,0,,{\i1}Có lẽ mình không viết ra được\Nbài văn thú vị như vậy.{\i0}
Dialogue: 0,0:15:28.89,0:15:30.64,Default,,0,0,0,,{\i1}Gần đây còn xảy ra một chuyện nữa.{\i0}
Dialogue: 0,0:15:30.72,0:15:33.22,Default,,0,0,0,,{\i1}Mình muốn mua chỉ vàng,{\i0}
Dialogue: 0,0:15:33.31,0:15:36.90,Default,,0,0,0,,{\i1}nhưng lúc đó đã là buổi tối,\Nnên bố đi mua cùng mình.{\i0}
Dialogue: 0,0:15:36.98,0:15:39.15,Default,,0,0,0,,{\i1}Cô ấy thân thiết với bố thật.{\i0}
Dialogue: 0,0:15:39.65,0:15:40.52,Default,,0,0,0,,{\i1}Chuyện thứ ba.{\i0}
Dialogue: 0,0:15:40.61,0:15:42.98,Default,,0,0,0,,{\i1}Qua giờ giới nghiêm mình mới về nhà.{\i0}
Dialogue: 0,0:15:43.69,0:15:48.66,Default,,0,0,0,,{\i1}Dù sáng hôm sau mẹ cấm uống ca cao nóng,{\i0}
Dialogue: 0,0:15:48.74,0:15:51.12,Default,,0,0,0,,{\i1}nhưng bố lại cho mình uống.{\i0}
Dialogue: 0,0:15:53.70,0:15:55.66,Default,,0,0,0,,{\i1}Cảm ơn chú!{\i0}
Dialogue: 0,0:15:57.21,0:15:58.04,Default,,0,0,0,,{\i1}MIE AI, BẠCH TUỘC{\i0}
Dialogue: 0,0:15:58.12,0:15:59.38,Default,,0,0,0,,{\i1}Dễ thương quá.{\i0}
Dialogue: 0,0:15:59.96,0:16:01.92,Default,,0,0,0,,{\i1}Dễ thương y như Mie vậy.{\i0}
Dialogue: 0,0:16:02.42,0:16:03.42,Default,,0,0,0,,{\an8\i1}MIE AI, BẠCH TUỘC{\i0}
Dialogue: 0,0:16:03.51,0:16:05.59,Default,,0,0,0,,{\an8\i1}Ra vậy, chỉ màu vàng.{\i0}
Dialogue: 0,0:16:06.17,0:16:10.14,Default,,0,0,0,,{\i1}Dùng chỉ màu vàng này,\Nvà cả chuyện dùng hạt làm mắt,{\i0}
Dialogue: 0,0:16:10.22,0:16:12.72,Default,,0,0,0,,{\i1}mỗi lần có ý tưởng mới,\Ncô ấy đều rất vui vẻ với nó.{\i0}
Dialogue: 0,0:16:13.52,0:16:16.64,Default,,0,0,0,,{\i1}Hóa ra cô ấy mong chờ đến ngày\Nkỷ niệm thành lập trường đến vậy sao?{\i0}
Dialogue: 0,0:16:17.31,0:16:18.14,Default,,0,0,0,,Asuka.
Dialogue: 0,0:16:18.69,0:16:19.90,Default,,0,0,0,,Sao vậy, Mie?
Dialogue: 0,0:16:20.61,0:16:24.03,Default,,0,0,0,,Mình hơi mệt,\Nmình ra gần đây nghỉ một lát nhé?
Dialogue: 0,0:16:24.11,0:16:25.24,Default,,0,0,0,,Gần đây sao?
Dialogue: 0,0:16:25.32,0:16:27.90,Default,,0,0,0,,{\an8\i1}Không… không bị cô ấy nhìn thấy chứ?{\i0}
Dialogue: 0,0:16:28.49,0:16:31.53,Default,,0,0,0,,{\i1}Không, mình chỉ đang xem\Nđồ triển lãm thôi.{\i0}
Dialogue: 0,0:16:35.12,0:16:38.04,Default,,0,0,0,,{\i1}Cô ấy đang xem tác phẩm của mình!{\i0}
Dialogue: 0,0:16:39.21,0:16:40.21,Default,,0,0,0,,{\i1}Đừng xem mà!{\i0}
Dialogue: 0,0:16:40.29,0:16:43.13,Default,,0,0,0,,{\i1}Đó chỉ là một quả bóng tròn\Nhoàn toàn nhạt nhẽo thôi!{\i0}
Dialogue: 0,0:16:43.21,0:16:45.71,Default,,0,0,0,,{\i1}Cô ấy sẽ nghĩ mình rỗng tuếch mất.{\i0}
Dialogue: 0,0:16:45.80,0:16:47.59,Default,,0,0,0,,{\i1}Cô… cô ấy vẫn đang xem sao?{\i0}
Dialogue: 0,0:16:47.67,0:16:49.84,Default,,0,0,0,,{\i1}Rốt cuộc có gì khiến cô ấy để ý như vậy?{\i0}
Dialogue: 0,0:16:51.30,0:16:53.43,Default,,0,0,0,,{\i1}Hôm… hôm nay cô ấy có đeo kính phải không?{\i0}
Dialogue: 0,0:16:54.01,0:16:56.10,Default,,0,0,0,,{\i1}Suy cho cùng cô ấy là Mie,{\i0}
Dialogue: 0,0:16:56.18,0:16:59.35,Default,,0,0,0,,{\i1}có lẽ chỉ đang đếm\Nsố mũi kim của mình thôi.{\i0}
Dialogue: 0,0:17:03.86,0:17:06.90,Default,,0,0,0,,{\i1}Đó thật sự không phải món đồ\Nđáng để cậu quan sát kỹ lưỡng vậy đâu.{\i0}
Dialogue: 0,0:17:08.07,0:17:11.53,Default,,0,0,0,,Tiếp theo là\Nbài phát biểu của từng câu lạc bộ.
Dialogue: 0,0:17:16.04,0:17:17.41,Default,,0,0,0,,{\i1}Cô ấy đi vệ sinh sao?{\i0}
Dialogue: 0,0:17:18.12,0:17:19.37,Default,,0,0,0,,{\i1}Mình cũng đi vậy.{\i0}
Dialogue: 0,0:17:22.58,0:17:23.46,Default,,0,0,0,,Komura.
Dialogue: 0,0:17:24.84,0:17:25.96,Default,,0,0,0,,Cậu sao vậy?
Dialogue: 0,0:17:27.71,0:17:30.30,Default,,0,0,0,,Mie đó, cậu sao vậy?
Dialogue: 0,0:17:30.38,0:17:32.14,Default,,0,0,0,,Mình không sao.
Dialogue: 0,0:17:32.22,0:17:33.64,Default,,0,0,0,,Không sao ư?
Dialogue: 0,0:17:35.22,0:17:37.43,Default,,0,0,0,,Mình thấy thật kỳ diệu.
Dialogue: 0,0:17:37.52,0:17:39.60,Default,,0,0,0,,Giữa ban ngày mà ở đây không có ai.
Dialogue: 0,0:17:39.68,0:17:42.52,Default,,0,0,0,,{\i1}Quãng thời gian đẹp đẽ này là sao vậy?{\i0}
Dialogue: 0,0:17:43.10,0:17:45.15,Default,,0,0,0,,Mình xem nhật ký của Komura rồi.
Dialogue: 0,0:17:47.36,0:17:48.94,Default,,0,0,0,,Viết về những chuyện\Nxảy ra gần đây đó sao?
Dialogue: 0,0:17:49.03,0:17:52.78,Default,,0,0,0,,Nói sao nhỉ?\NCách dùng từ của cậu rất nho nhã.
Dialogue: 0,0:17:52.86,0:17:53.70,Default,,0,0,0,,Mình rất thích.
Dialogue: 0,0:17:55.78,0:17:58.54,Default,,0,0,0,,Mình… mình cũng đọc của Mie rồi.
Dialogue: 0,0:17:58.62,0:17:59.58,Default,,0,0,0,,Thật sao?
Dialogue: 0,0:18:00.79,0:18:03.83,Default,,0,0,0,,Rất… rất thú vị, mình rất thích.
Dialogue: 0,0:18:03.92,0:18:05.59,Default,,0,0,0,,Có phải cậu đang cười mình không?
Dialogue: 0,0:18:05.67,0:18:07.13,Default,,0,0,0,,Không… không có chuyện đó đâu.
Dialogue: 0,0:18:14.72,0:18:16.26,Default,,0,0,0,,Chờ đã!
Dialogue: 0,0:18:17.68,0:18:20.10,Default,,0,0,0,,Cậu… cậu muốn ngắm mặt mình sao?
Dialogue: 0,0:18:20.18,0:18:21.23,Default,,0,0,0,,Phải.
Dialogue: 0,0:18:21.31,0:18:22.14,Default,,0,0,0,,Không được sao?
Dialogue: 0,0:18:22.23,0:18:24.52,Default,,0,0,0,,Sẽ… sẽ bị người khác thấy đó.
Dialogue: 0,0:18:25.02,0:18:26.61,Default,,0,0,0,,Mọi người ở phòng thể chất mà.
Dialogue: 0,0:18:26.69,0:18:29.90,Default,,0,0,0,,Hơn nữa,\Nkhông phải hôm nay cậu đeo kính sao?
Dialogue: 0,0:18:29.98,0:18:31.99,Default,,0,0,0,,Chắc không cần áp sát vậy chứ?
Dialogue: 0,0:18:34.11,0:18:37.58,Default,,0,0,0,,Đúng là dạo này\Nmình có phải quá tùy tiện không?
Dialogue: 0,0:18:38.83,0:18:40.75,Default,,0,0,0,,{\i1}Mình cứ thấy dạo này{\i0}
Dialogue: 0,0:18:40.83,0:18:42.46,Default,,0,0,0,,{\i1}mỗi ngày đều rất vui.{\i0}
Dialogue: 0,0:18:42.54,0:18:45.04,Default,,0,0,0,,{\i1}Có lẽ mình đã vui quá trớn rồi.{\i0}
Dialogue: 0,0:18:45.54,0:18:48.50,Default,,0,0,0,,Mình… mình không thấy như vậy.
Dialogue: 0,0:18:53.72,0:18:55.43,Default,,0,0,0,,Mie…
Dialogue: 0,0:18:55.93,0:18:58.56,Default,,0,0,0,,Tại sao… cậu lại muốn\Nngắm mặt mình như vậy?
Dialogue: 0,0:18:59.06,0:19:02.64,Default,,0,0,0,,{\i1}Thật ra đó không phải thứ\Nđáng để cậu ngắm nghía kỹ càng mà.{\i0}
Dialogue: 0,0:19:03.14,0:19:04.64,Default,,0,0,0,,Vì nó làm mình yên tâm.
Dialogue: 0,0:19:06.56,0:19:08.44,Default,,0,0,0,,Vậy… vậy sao?
Dialogue: 0,0:19:11.07,0:19:14.82,Default,,0,0,0,,{\i1}Rốt cuộc mình đang kỳ vọng gì vậy?{\i0}
Dialogue: 0,0:19:15.82,0:19:16.70,Default,,0,0,0,,Có điều…
Dialogue: 0,0:19:19.08,0:19:22.50,Default,,0,0,0,,đúng là mình đã vui quá trớn rồi.
Dialogue: 0,0:19:23.08,0:19:26.83,Default,,0,0,0,,Sau này mình sẽ ráng nhịn ham muốn đó,\Nkhông ngắm mặt của Komura nữa.
Dialogue: 0,0:19:29.50,0:19:31.00,Default,,0,0,0,,Không… không sao đâu.
Dialogue: 0,0:19:31.96,0:19:34.09,Default,,0,0,0,,Cậu… cậu không cần nhìn.
Dialogue: 0,0:19:34.17,0:19:36.47,Default,,0,0,0,,Mình hoàn toàn không sao.
Dialogue: 0,0:19:36.55,0:19:38.39,Default,,0,0,0,,Nếu Mie muốn ngắm…
Dialogue: 0,0:19:38.47,0:19:41.14,Default,,0,0,0,,{\i1}Không, không phải như vậy.{\i0}
Dialogue: 0,0:19:41.22,0:19:44.10,Default,,0,0,0,,{\i1}Đừng dùng kiểu nói thấp kém như vậy.{\i0}
Dialogue: 0,0:19:44.18,0:19:45.89,Default,,0,0,0,,Không phải.
Dialogue: 0,0:19:47.98,0:19:50.06,Default,,0,0,0,,{\i1}Đâu phải Mie muốn ngắm.{\i0}
Dialogue: 0,0:19:50.15,0:19:51.90,Default,,0,0,0,,Mình cũng…
Dialogue: 0,0:19:51.98,0:19:53.90,Default,,0,0,0,,Komura cũng muốn sao?
Dialogue: 0,0:19:55.49,0:19:56.61,Default,,0,0,0,,Komura.
Dialogue: 0,0:19:58.32,0:19:59.20,Default,,0,0,0,,Được mà.
Dialogue: 0,0:20:03.62,0:20:04.50,Default,,0,0,0,,Được mà.
Dialogue: 0,0:20:07.21,0:20:08.17,Default,,0,0,0,,{\i1}Con người…{\i0}
Dialogue: 0,0:20:11.50,0:20:13.13,Default,,0,0,0,,{\i1}vô vị như mình{\i0}
Dialogue: 0,0:20:13.71,0:20:15.09,Default,,0,0,0,,{\i1}lại rất ích kỷ,{\i0}
Dialogue: 0,0:20:15.67,0:20:17.51,Default,,0,0,0,,{\i1}chưa kể còn làm người ta muốn ói.{\i0}
Dialogue: 0,0:20:18.51,0:20:19.80,Default,,0,0,0,,{\i1}Nhưng dù vậy…{\i0}
Dialogue: 0,0:20:20.93,0:20:22.01,Default,,0,0,0,,{\i1}sau này,{\i0}
Dialogue: 0,0:20:23.93,0:20:27.02,Default,,0,0,0,,{\i1}mình vẫn muốn ngắm Mie.{\i0}
Dialogue: 0,0:20:35.53,0:20:36.44,Default,,0,0,0,,Sao vậy?
Dialogue: 0,0:20:37.57,0:20:38.99,Default,,0,0,0,,Mình… mình sao vậy?
Dialogue: 0,0:20:39.53,0:20:40.78,Default,,0,0,0,,Cậu không sao chứ?
Dialogue: 0,0:20:43.28,0:20:44.12,Default,,0,0,0,,Nhưng mà
Dialogue: 0,0:20:44.66,0:20:47.96,Default,,0,0,0,,mình vẫn sẽ ráng nhịn.
Dialogue: 0,0:20:50.58,0:20:51.54,Default,,0,0,0,,Này,
Dialogue: 0,0:20:51.63,0:20:53.96,Default,,0,0,0,,trước đây mình từng nghĩ vậy rồi.
Dialogue: 0,0:20:54.05,0:20:57.13,Default,,0,0,0,,Komura trông rất giống bố mình.
Dialogue: 0,0:20:58.42,0:20:59.47,Default,,0,0,0,,Bố cậu…
Dialogue: 0,0:21:00.22,0:21:02.97,Default,,0,0,0,,Ừ, giống là giống ở vẻ ấm áp.
Dialogue: 0,0:21:03.93,0:21:06.52,Default,,0,0,0,,Bởi vậy mình mới không nhịn nổi\Nmà làm nũng với cậu.
Dialogue: 0,0:21:07.14,0:21:08.06,Default,,0,0,0,,{\i1}Bố…{\i0}
Dialogue: 0,0:21:08.64,0:21:11.98,Default,,0,0,0,,{\i1}Ra vậy, cô ấy nói "an tâm"\Nlà vì lý do này sao?{\i0}
Dialogue: 0,0:21:12.06,0:21:14.61,Default,,0,0,0,,Không quay về chắc là sẽ gặp rắc rối đó.
Dialogue: 0,0:21:14.69,0:21:15.61,Default,,0,0,0,,Chúng ta về thôi.
Dialogue: 0,0:21:15.69,0:21:18.40,Default,,0,0,0,,{\i1}Hóa ra cô ấy chỉ coi mình như vậy.{\i0}
Dialogue: 0,0:21:18.49,0:21:19.57,Default,,0,0,0,,Komura.
Dialogue: 0,0:21:21.07,0:21:21.91,Default,,0,0,0,,Ừ.
Dialogue: 0,0:21:21.99,0:21:24.28,Default,,0,0,0,,Nghĩ kỹ thì như vậy có vẻ không ổn lắm.
Dialogue: 0,0:21:24.99,0:21:26.70,Default,,0,0,0,,Liệu có bị giáo viên mắng không?
Dialogue: 0,0:21:27.29,0:21:28.96,Default,,0,0,0,,{\i1}Đột nhiên lại bất an.{\i0}
Dialogue: 0,0:21:31.42,0:21:32.46,Default,,0,0,0,,Bỏ đi.
Dialogue: 0,0:21:32.54,0:21:34.54,Default,,0,0,0,,Được ở cùng Komura là không sao rồi.
Dialogue: 0,0:21:35.75,0:21:37.42,Default,,0,0,0,,{\i1}Bố sao?{\i0}
Dialogue: 0,0:23:10.52,0:23:12.06,Default,,0,0,0,,{\i1}Tôi là Komura Kaede.{\i0}
Dialogue: 0,0:23:12.14,0:23:13.35,Default,,0,0,0,,{\i1}Để tôi giới thiệu tập sau.{\i0}
Dialogue: 0,0:23:14.06,0:23:15.44,Default,,0,0,0,,{\i1}Ngày thực tập nội trợ…{\i0}
Dialogue: 0,0:23:15.52,0:23:16.90,Default,,0,0,0,,{\i1}Thực tập nội trợ?{\i0}
Dialogue: 0,0:23:16.98,0:23:21.03,Default,,0,0,0,,{\i1}Nếu được ăn đồ ăn\NMie tự tay nấu thì tốt rồi.{\i0}
Dialogue: 0,0:23:21.73,0:23:24.28,Default,,0,0,0,,{\i1}Không được,\Ngiờ phải tập trung vào giới thiệu.{\i0}
Dialogue: 0,0:23:25.78,0:23:27.32,Default,,0,0,0,,{\i1}Ngày thực tập nội trợ,{\i0}
Dialogue: 0,0:23:27.41,0:23:31.33,Default,,0,0,0,,{\i1}Komura không được ở chung nhóm với Mie.{\i0}
Dialogue: 0,0:23:31.41,0:23:32.75,Default,,0,0,0,,{\i1}Không chung nhóm?{\i0}
Dialogue: 0,0:23:33.25,0:23:35.00,Default,,0,0,0,,{\i1}Giới thiệu chỉ có vậy sao?{\i0}
Dialogue: 0,0:23:35.08,0:23:38.13,Default,,0,0,0,,{\i1}Tập sau:\N"Muốn cùng cô gái mình thích làm nội trợ".{\i0}
Dialogue: 0,0:23:38.67,0:23:39.96,Default,,0,0,0,,{\i1}Chỉ muốn vậy thôi?{\i0}
