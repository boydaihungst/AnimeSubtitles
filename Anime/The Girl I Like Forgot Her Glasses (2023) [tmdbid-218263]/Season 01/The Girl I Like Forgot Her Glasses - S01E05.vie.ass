Dialogue: 0,0:00:02.63,0:00:03.71,Default,,0,0,0,,{\i1}Kaede.{\i0}
Dialogue: 0,0:00:03.80,0:00:05.92,Default,,0,0,0,,{\i1}Nhà hết tương cà rồi, con đi mua nhé.{\i0}
Dialogue: 0,0:00:06.01,0:00:07.38,Default,,0,0,0,,{\i1}Dạ.{\i0}
Dialogue: 0,0:00:16.68,0:00:17.89,Default,,0,0,0,,Lạnh quá.
Dialogue: 0,0:00:24.48,0:00:26.65,Default,,0,0,0,,{\i1}Sắp tới Lễ Tình Nhân rồi sao?{\i0}
Dialogue: 0,0:00:30.82,0:00:31.74,Default,,0,0,0,,{\i1}Tặng cậu.{\i0}
Dialogue: 0,0:00:37.25,0:00:40.25,Default,,0,0,0,,Nếu được nhận quà của Mie thì tốt.
Dialogue: 0,0:00:40.33,0:00:41.46,Default,,0,0,0,,Mà sao có thể chứ.
Dialogue: 0,0:00:42.04,0:00:44.46,Default,,0,0,0,,Lúc nãy có người gọi mình sao?
Dialogue: 0,0:02:24.81,0:02:27.77,Default,,0,0,0,,Nếu được nhận quà của Mie thì tốt.
Dialogue: 0,0:02:27.86,0:02:29.02,Default,,0,0,0,,Mà sao có thể chứ.
Dialogue: 0,0:02:30.23,0:02:32.78,Default,,0,0,0,,Lúc nãy có người gọi mình sao?
Dialogue: 0,0:02:34.20,0:02:36.53,Default,,0,0,0,,Mie…
Dialogue: 0,0:02:36.62,0:02:38.41,Default,,0,0,0,,Ủa, là Komura.
Dialogue: 0,0:02:38.49,0:02:39.66,Default,,0,0,0,,Trùng hợp thật.
Dialogue: 0,0:02:39.74,0:02:41.08,Default,,0,0,0,,Cậu tới mua đồ à?
Dialogue: 0,0:02:41.16,0:02:42.54,Default,,0,0,0,,Ừ.
Dialogue: 0,0:02:42.62,0:02:44.12,Default,,0,0,0,,Mình đi mua tương cà.
Dialogue: 0,0:02:45.25,0:02:47.38,Default,,0,0,0,,{\i1}Cô ấy mặc đồ thường ngày!{\i0}
Dialogue: 0,0:02:47.46,0:02:49.88,Default,,0,0,0,,{\i1}Không ngờ có thể\Nvô tình gặp ở ngoài thế này.{\i0}
Dialogue: 0,0:02:51.63,0:02:55.38,Default,,0,0,0,,{\i1}Chưa kể ở ngoài trường\Nmà cũng quên đeo kính.{\i0}
Dialogue: 0,0:02:56.72,0:03:00.35,Default,,0,0,0,,Mie không đeo kính từ nhà đi đến đây sao?
Dialogue: 0,0:03:00.93,0:03:02.81,Default,,0,0,0,,Chuyện đó… nói ra thì xấu hổ thật.
Dialogue: 0,0:03:03.52,0:03:06.15,Default,,0,0,0,,Không, ý mình không phải vậy.
Dialogue: 0,0:03:06.23,0:03:09.15,Default,,0,0,0,,Khu này mình nắm rất rõ, không sao đâu.
Dialogue: 0,0:03:09.23,0:03:10.82,Default,,0,0,0,,Vậy… vậy sao?
Dialogue: 0,0:03:10.90,0:03:12.53,Default,,0,0,0,,Mà phải, Komura.
Dialogue: 0,0:03:13.28,0:03:17.28,Default,,0,0,0,,Cậu vừa nói\N"nếu được nhận quà của Mie thì tốt"
Dialogue: 0,0:03:17.87,0:03:19.37,Default,,0,0,0,,là ý gì vậy?
Dialogue: 0,0:03:20.62,0:03:23.20,Default,,0,0,0,,{\i1}Bị cô ấy nghe thấy rồi!{\i0}
Dialogue: 0,0:03:23.79,0:03:26.33,Default,,0,0,0,,{\i1}Nếu để Mie biết\Nmình muốn nhận sô-cô-la của cô ấy{\i0}
Dialogue: 0,0:03:26.42,0:03:28.88,Default,,0,0,0,,{\i1}thì khác gì đang tỏ tình với cô ấy?{\i0}
Dialogue: 0,0:03:31.38,0:03:33.76,Default,,0,0,0,,- Không, chuyện đó…\N{\i1}- Nếu bị đá thế này,{\i0}
Dialogue: 0,0:03:33.84,0:03:35.72,Default,,0,0,0,,{\i1}chắc mình sẽ muốn tự vẫn.{\i0}
Dialogue: 0,0:03:37.34,0:03:39.22,Default,,0,0,0,,Chuyện đó có hơi…
Dialogue: 0,0:03:39.97,0:03:42.81,Default,,0,0,0,,{\i1}Không được để cô ấy biết\Ntình cảm của mình.{\i0}
Dialogue: 0,0:03:44.35,0:03:46.77,Default,,0,0,0,,{\i1}Đường phố tràn ngập\Nkhông khí Lễ Tình Nhân.{\i0}
Dialogue: 0,0:03:48.81,0:03:53.07,Default,,0,0,0,,{\i1}Nhìn bầu không khí này là có thể dễ dàng\Nđoán ra mình muốn nhận cái gì từ Mie.{\i0}
Dialogue: 0,0:03:54.03,0:03:55.61,Default,,0,0,0,,{\i1}Nếu bị cô ấy phát hiện{\i0}
Dialogue: 0,0:03:55.69,0:03:56.99,Default,,0,0,0,,{\i1}tình cảm của mình…{\i0}
Dialogue: 0,0:03:57.49,0:04:00.41,Default,,0,0,0,,{\i1}Sắp kết thúc rồi, mối tình của tôi!{\i0}
Dialogue: 0,0:04:01.12,0:04:04.95,Default,,0,0,0,,Mà hôm nay khu này đỏ thật đó.
Dialogue: 0,0:04:07.67,0:04:09.58,Default,,0,0,0,,Cảnh tượng này nói sao nhỉ?
Dialogue: 0,0:04:11.38,0:04:12.88,Default,,0,0,0,,Đang sửa sang sao?
Dialogue: 0,0:04:12.96,0:04:15.09,Default,,0,0,0,,{\i1}Đúng rồi, cô ấy không nhìn thấy!{\i0}
Dialogue: 0,0:04:16.13,0:04:18.68,Default,,0,0,0,,{\i1}Tức là tình cảm của mình\Nchưa bị phát hiện.{\i0}
Dialogue: 0,0:04:18.76,0:04:21.10,Default,,0,0,0,,{\i1}Cảm giác như vừa được cứu sống vậy.{\i0}
Dialogue: 0,0:04:23.47,0:04:26.10,Default,,0,0,0,,Xin lỗi, mình cứ nói một mình.
Dialogue: 0,0:04:26.18,0:04:28.73,Default,,0,0,0,,À, mình phải đi siêu thị rồi.
Dialogue: 0,0:04:30.02,0:04:33.36,Default,,0,0,0,,{\i1}Cũng may đổi chủ đề được.{\i0}
Dialogue: 0,0:04:37.15,0:04:40.32,Default,,0,0,0,,Mẹ nhờ mình mua sốt mayonnaise.
Dialogue: 0,0:04:40.41,0:04:42.24,Default,,0,0,0,,Mình thì mua tương cà.
Dialogue: 0,0:04:42.32,0:04:45.91,Default,,0,0,0,,{\i1}Được đi siêu thị mua đồ với riêng Mie.{\i0}
Dialogue: 0,0:04:46.00,0:04:47.75,Default,,0,0,0,,{\i1}Cảm giác giống vợ chồng quá.{\i0}
Dialogue: 0,0:04:49.08,0:04:50.87,Default,,0,0,0,,{\i1}Đúng là sự trùng hợp may mắn.{\i0}
Dialogue: 0,0:04:50.96,0:04:54.84,Default,,0,0,0,,{\i1}Có lẽ hôm nay có thần linh\Nđứng sau phù hộ mình.{\i0}
Dialogue: 0,0:04:54.92,0:04:56.26,Default,,0,0,0,,Này, Komura.
Dialogue: 0,0:04:57.01,0:04:58.47,Default,,0,0,0,,Đó là cái gì?
Dialogue: 0,0:04:58.55,0:05:00.97,Default,,0,0,0,,Có một thứ nhìn rất giống ngôi mộ.
Dialogue: 0,0:05:01.59,0:05:03.80,Default,,0,0,0,,{\i1}Hóa ra người đang đối đầu với con,{\i0}
Dialogue: 0,0:05:04.31,0:05:05.51,Default,,0,0,0,,{\i1}thần linh ơi.{\i0}
Dialogue: 0,0:05:06.10,0:05:08.52,Default,,0,0,0,,Cái đó là…
Dialogue: 0,0:05:09.56,0:05:11.15,Default,,0,0,0,,Lúc nãy mình quên hỏi.
Dialogue: 0,0:05:12.44,0:05:16.86,Default,,0,0,0,,Komura, cậu nói\Nmuốn nhận quà gì từ mình cơ?
Dialogue: 0,0:05:17.44,0:05:18.44,Default,,0,0,0,,{\i1}Thần linh.{\i0}
Dialogue: 0,0:05:18.53,0:05:20.28,Default,,0,0,0,,{\i1}Mau dừng tay, thần linh ơi.{\i0}
Dialogue: 0,0:05:21.45,0:05:24.24,Default,,0,0,0,,- Được không mẹ?\N- Mình từng nói sẽ tặng gì cho cậu à?
Dialogue: 0,0:05:24.33,0:05:27.58,Default,,0,0,0,,- Nếu mình quên thì xin lỗi nhé.\N- Không phải.
Dialogue: 0,0:05:27.66,0:05:30.29,Default,,0,0,0,,- Con muốn ăn kem.\N- Cái đó…
Dialogue: 0,0:05:30.37,0:05:32.58,Default,,0,0,0,,Xin mời ăn thử.
Dialogue: 0,0:05:32.67,0:05:34.17,Default,,0,0,0,,{\i1}Tốt lắm, chị bán hàng.{\i0}
Dialogue: 0,0:05:34.25,0:05:35.63,Default,,0,0,0,,{\i1}Có thể đổi chủ đề rồi.{\i0}
Dialogue: 0,0:05:35.71,0:05:37.55,Default,,0,0,0,,Mie, được ăn thử kìa.
Dialogue: 0,0:05:39.21,0:05:40.80,Default,,0,0,0,,{\i1}Tự đào mồ chôn rồi!{\i0}
Dialogue: 0,0:05:41.38,0:05:43.39,Default,,0,0,0,,Đúng thật, thơm quá.
Dialogue: 0,0:05:43.47,0:05:45.51,Default,,0,0,0,,- Là sô-cô-la sao?\N- Mie, ở đó có thịt đó.
Dialogue: 0,0:05:45.60,0:05:46.56,Default,,0,0,0,,Là thịt!
Dialogue: 0,0:05:47.93,0:05:50.31,Default,,0,0,0,,- Em có thể thử một miếng không?\N- Mời em.
Dialogue: 0,0:05:50.89,0:05:52.77,Default,,0,0,0,,Tất cả đều là sô-cô-la sao?
Dialogue: 0,0:05:53.35,0:05:54.81,Default,,0,0,0,,Phải.
Dialogue: 0,0:05:54.90,0:05:56.32,Default,,0,0,0,,Dù sao cũng sắp đến Lễ…
Dialogue: 0,0:05:57.19,0:05:58.94,Default,,0,0,0,,Xin hỏi chị, chỗ này bán sô-cô-la sao?
Dialogue: 0,0:05:59.74,0:06:01.49,Default,,0,0,0,,Mời dùng.
Dialogue: 0,0:06:01.57,0:06:03.49,Default,,0,0,0,,Vậy… vậy em lấy một hộp.
Dialogue: 0,0:06:03.57,0:06:04.99,Default,,0,0,0,,Mie, ta đi thôi.
Dialogue: 0,0:06:12.54,0:06:13.50,Default,,0,0,0,,Xin lỗi.
Dialogue: 0,0:06:13.58,0:06:14.83,Default,,0,0,0,,Komura.
Dialogue: 0,0:06:15.33,0:06:16.79,Default,,0,0,0,,Tay cậu ấm quá.
Dialogue: 0,0:06:19.38,0:06:21.59,Default,,0,0,0,,Tay mình lạnh lắm phải không?
Dialogue: 0,0:06:21.67,0:06:23.38,Default,,0,0,0,,Không… không hề.
Dialogue: 0,0:06:24.09,0:06:26.47,Default,,0,0,0,,{\i1}Mình chỉ thấy tay rất mềm thôi.{\i0}
Dialogue: 0,0:06:27.05,0:06:27.89,Default,,0,0,0,,Có điều,
Dialogue: 0,0:06:28.39,0:06:31.60,Default,,0,0,0,,tay lạnh có lúc cũng rất tiện.
Dialogue: 0,0:06:31.68,0:06:33.39,Default,,0,0,0,,Ví dụ như lúc làm sô-cô-la rất tiện.
Dialogue: 0,0:06:35.02,0:06:36.11,Default,,0,0,0,,Đúng vậy.
Dialogue: 0,0:06:37.15,0:06:40.15,Default,,0,0,0,,Chưa biết chừng\Nsô-cô-la sẽ không dễ chảy như vậy.
Dialogue: 0,0:06:44.66,0:06:46.37,Default,,0,0,0,,Cậu biết làm sô-cô-la à?
Dialogue: 0,0:06:47.24,0:06:48.08,Default,,0,0,0,,Ừ.
Dialogue: 0,0:06:48.16,0:06:50.91,Default,,0,0,0,,Cậu xem,\Nchẳng phải sắp đến Lễ Tình Nhân sao?
Dialogue: 0,0:06:53.50,0:06:57.42,Default,,0,0,0,,Hóa ra màu đỏ ở khu này\Nlà trang trí ngày Lễ Tình Nhân sao?
Dialogue: 0,0:06:58.13,0:07:01.21,Default,,0,0,0,,Và cái mộ lúc nãy\Nlà núi sô-cô-la phải không?
Dialogue: 0,0:07:02.59,0:07:04.97,Default,,0,0,0,,Mie, có sốt mayonnaise.
Dialogue: 0,0:07:05.05,0:07:06.80,Default,,0,0,0,,Sốt mayonnaise ở bên kia kìa.
Dialogue: 0,0:07:08.14,0:07:09.81,Default,,0,0,0,,Komura này, lẽ nào
Dialogue: 0,0:07:09.89,0:07:12.81,Default,,0,0,0,,cậu muốn nhận sô-cô-la từ mình?
Dialogue: 0,0:07:12.89,0:07:15.69,Default,,0,0,0,,{\i1}Không sai!{\i0}
Dialogue: 0,0:07:17.90,0:07:20.23,Default,,0,0,0,,{\i1}Bị… bị cô ấy phát hiện rồi.{\i0}
Dialogue: 0,0:07:21.32,0:07:23.90,Default,,0,0,0,,{\i1}Cuối cùng cô ấy vẫn đoán được\Ntình cảm của mình.{\i0}
Dialogue: 0,0:07:24.49,0:07:25.36,Default,,0,0,0,,{\i1}Làm sao đây?{\i0}
Dialogue: 0,0:07:25.95,0:07:27.82,Default,,0,0,0,,{\i1}Làm ơn đừng từ chối mình.{\i0}
Dialogue: 0,0:07:27.91,0:07:30.87,Default,,0,0,0,,{\i1}Đừng ghét mình mà, Mie!{\i0}
Dialogue: 0,0:07:31.74,0:07:33.95,Default,,0,0,0,,Komura cũng thích sô-cô-la sao?
Dialogue: 0,0:07:36.67,0:07:38.38,Default,,0,0,0,,Không, chuyện đó…
Dialogue: 0,0:07:38.96,0:07:42.38,Default,,0,0,0,,Vốn dĩ mình định\Ntặng hết cho tất cả bạn bè,
Dialogue: 0,0:07:43.13,0:07:45.26,Default,,0,0,0,,nên sẽ có cả Komura.
Dialogue: 0,0:07:46.18,0:07:47.26,Default,,0,0,0,,Bạn bè…
Dialogue: 0,0:07:48.55,0:07:51.14,Default,,0,0,0,,Nhưng mình vẫn chưa nghĩ ra\Nnên làm cái gì.
Dialogue: 0,0:07:51.81,0:07:53.89,Default,,0,0,0,,{\i1}Đừng nói tình cảm của mình bị lộ,{\i0}
Dialogue: 0,0:07:54.56,0:07:57.90,Default,,0,0,0,,{\i1}mà thật ra\Ncô ấy vốn không để tâm đến chuyện đó.{\i0}
Dialogue: 0,0:07:57.98,0:07:59.73,Default,,0,0,0,,Mời ăn thử.
Dialogue: 0,0:07:59.81,0:08:01.44,Default,,0,0,0,,- Vậy cho tôi một cái.\N{\i1}- Có điều…{\i0}
Dialogue: 0,0:08:02.23,0:08:04.11,Default,,0,0,0,,{\i1}được nhận sô-cô-la tình bạn cũng rất vui.{\i0}
Dialogue: 0,0:08:05.74,0:08:09.16,Default,,0,0,0,,NĂM 2, LỚP B
Dialogue: 0,0:08:11.74,0:08:14.16,Default,,0,0,0,,NGÀY 14 THÁNG 2
Dialogue: 0,0:08:14.24,0:08:15.95,Default,,0,0,0,,{\i1}Hôm nay là ngày Lễ Tình Nhân,{\i0}
Dialogue: 0,0:08:16.62,0:08:20.29,Default,,0,0,0,,{\i1}là ngày có thể nhận được\Nsô-cô-la từ người thương.{\i0}
Dialogue: 0,0:08:21.75,0:08:26.13,Default,,0,0,0,,{\i1}Tôi chắc chắn\Nmình sẽ nhận được sô-cô-la từ Mie.{\i0}
Dialogue: 0,0:08:26.80,0:08:29.05,Default,,0,0,0,,{\i1}Đúng vậy. Nếu muốn biết lý do,{\i0}
Dialogue: 0,0:08:29.13,0:08:33.06,Default,,0,0,0,,{\i1}thì đó là vì cô ấy đã nói\Nsẽ tặng tôi sô-cô-la tình bạn.{\i0}
Dialogue: 0,0:08:33.97,0:08:37.35,Default,,0,0,0,,- Mình cũng có sao?\N{\i1}- Dù hôm nay Mie cũng quên đeo kính…{\i0}
Dialogue: 0,0:08:37.43,0:08:39.65,Default,,0,0,0,,- Tặng cậu.\N{\i1}- …nhưng nhìn cô ấy đi tặng sô-cô-la,{\i0}
Dialogue: 0,0:08:39.73,0:08:40.81,Default,,0,0,0,,{\i1}tôi cũng yên tâm rồi.{\i0}
Dialogue: 0,0:08:41.40,0:08:43.32,Default,,0,0,0,,Nãy ai vừa tặng sô-cô-la cho mình ấy nhỉ?
Dialogue: 0,0:08:43.40,0:08:45.32,Default,,0,0,0,,{\i1}Hình như vẫn có chút vấn đề.{\i0}
Dialogue: 0,0:08:45.94,0:08:47.69,Default,,0,0,0,,Là mình này.
Dialogue: 0,0:08:47.78,0:08:49.86,Default,,0,0,0,,- Là cậu sao?\N- Mie à…
Dialogue: 0,0:08:52.95,0:08:54.45,Default,,0,0,0,,{\i1}Sô-cô-la tình bạn sao?{\i0}
Dialogue: 0,0:08:54.95,0:08:58.04,Default,,0,0,0,,{\i1}Không… Không đúng,\Nsô-cô-la tình bạn là đủ rồi.{\i0}
Dialogue: 0,0:08:58.12,0:08:59.92,Default,,0,0,0,,{\i1}Đây là chuyện rất vinh dự.{\i0}
Dialogue: 0,0:09:00.00,0:09:00.87,Default,,0,0,0,,Komura.
Dialogue: 0,0:09:02.29,0:09:03.34,Default,,0,0,0,,Komura.
Dialogue: 0,0:09:04.34,0:09:05.38,Default,,0,0,0,,Ừ.
Dialogue: 0,0:09:05.96,0:09:07.46,Default,,0,0,0,,Mình đem sô-cô-la tới rồi.
Dialogue: 0,0:09:07.55,0:09:09.09,Default,,0,0,0,,Cảm… cảm ơn cậu.
Dialogue: 0,0:09:09.17,0:09:11.09,Default,,0,0,0,,Mình thử làm sô-cô-la tươi.
Dialogue: 0,0:09:11.93,0:09:14.60,Default,,0,0,0,,Là kiểu sô-cô-la mềm mềm đó.
Dialogue: 0,0:09:15.85,0:09:17.85,Default,,0,0,0,,{\i1}Thật sự vinh dự.{\i0}
Dialogue: 0,0:09:21.85,0:09:22.69,Default,,0,0,0,,Lạ thật.
Dialogue: 0,0:09:23.94,0:09:26.86,Default,,0,0,0,,Hình như mình có để lại mà.
Dialogue: 0,0:09:26.94,0:09:28.78,Default,,0,0,0,,Mình nhìn nhầm rồi sao?
Dialogue: 0,0:09:28.86,0:09:30.24,Default,,0,0,0,,{\i1}Sao có thể?{\i0}
Dialogue: 0,0:09:31.45,0:09:34.20,Default,,0,0,0,,- Đây là sô-cô-la ngày Lễ Tình Nhân.\N- Xin… xin lỗi, mình…
Dialogue: 0,0:09:34.28,0:09:36.33,Default,,0,0,0,,Không, không sao. Không sao đâu.
Dialogue: 0,0:09:37.58,0:09:39.66,Default,,0,0,0,,- Cậu có tấm lòng là đủ rồi.\N- Xin lỗi cậu.
Dialogue: 0,0:09:40.96,0:09:43.04,Default,,0,0,0,,{\i1}Cô ấy có vẻ thất vọng.{\i0}
Dialogue: 0,0:09:45.21,0:09:48.76,Default,,0,0,0,,{\i1}Dù mình cũng rất thất vọng,{\i0}
Dialogue: 0,0:09:50.38,0:09:51.84,Default,,0,0,0,,{\i1}nhưng cũng hết cách rồi.{\i0}
Dialogue: 0,0:09:51.93,0:09:53.89,Default,,0,0,0,,{\i1}Đành chờ sô-cô-la năm sau vậy.{\i0}
Dialogue: 0,0:09:55.39,0:09:57.89,Default,,0,0,0,,{\i1}Năm sau cũng là sô-cô-la tình bạn sao?{\i0}
Dialogue: 0,0:09:58.93,0:10:02.27,Default,,0,0,0,,{\i1}Không, có khả năng\Nsẽ được nhận sô-cô-la tình yêu.{\i0}
Dialogue: 0,0:10:02.85,0:10:05.90,Default,,0,0,0,,{\i1}Nếu như mình…{\i0}
Dialogue: 0,0:10:07.77,0:10:12.07,Default,,0,0,0,,{\i1}tỏ tình với Mie và cô ấy nhận lời…{\i0}
Dialogue: 0,0:10:19.16,0:10:21.91,Default,,0,0,0,,{\i1}Không, mình tự đắc rồi.{\i0}
Dialogue: 0,0:10:22.00,0:10:23.92,Default,,0,0,0,,{\i1}Chắc chắc là mình tưởng bở thôi.{\i0}
Dialogue: 0,0:10:24.42,0:10:27.25,Default,,0,0,0,,{\i1}Mà phải, làm sao\Nmình dám tỏ tình với cô ấy được?{\i0}
Dialogue: 0,0:10:27.34,0:10:28.42,Default,,0,0,0,,Komura.
Dialogue: 0,0:10:32.05,0:10:32.97,Default,,0,0,0,,Chuyện này…
Dialogue: 0,0:10:34.80,0:10:35.72,Default,,0,0,0,,Mình muốn hỏi.
Dialogue: 0,0:10:36.93,0:10:39.47,Default,,0,0,0,,Sau giờ học hôm nay cậu rảnh không?
Dialogue: 0,0:11:07.67,0:11:12.42,Default,,0,0,0,,Mình… mình muốn\Nít nhiều cũng bù đắp cho cậu.
Dialogue: 0,0:11:15.01,0:11:17.01,Default,,0,0,0,,Komura cũng là bạn của mình.
Dialogue: 0,0:11:17.09,0:11:20.35,Default,,0,0,0,,Mình không muốn\Nchỉ mình Komura không nhận được quà.
Dialogue: 0,0:11:20.43,0:11:21.68,Default,,0,0,0,,Không.
Dialogue: 0,0:11:21.77,0:11:23.48,Default,,0,0,0,,Cậu không cần để tâm đâu.
Dialogue: 0,0:11:24.02,0:11:28.90,Default,,0,0,0,,Dù cho đến lúc tan học, mình vẫn suy nghĩ\Nlàm thế nào để bù đắp cho cậu,
Dialogue: 0,0:11:28.98,0:11:30.69,Default,,0,0,0,,nhưng thật sự mình nghĩ không ra.
Dialogue: 0,0:11:31.61,0:11:35.32,Default,,0,0,0,,Vì vậy, dù là bất đắt dĩ…
Dialogue: 0,0:11:36.07,0:11:36.91,Default,,0,0,0,,Ừ.
Dialogue: 0,0:11:38.37,0:11:41.58,Default,,0,0,0,,Mình có thể thực hiện\Nmột điều ước cho Komura.
Dialogue: 0,0:11:45.08,0:11:46.58,Default,,0,0,0,,Chuyện gì cũng được.
Dialogue: 0,0:11:51.21,0:11:54.42,Default,,0,0,0,,Không. Chuyện đó… Nhưng mà…
Dialogue: 0,0:11:54.51,0:11:56.13,Default,,0,0,0,,Thật sự là cái gì cũng được.
Dialogue: 0,0:11:56.22,0:11:58.43,Default,,0,0,0,,Mình quyết tâm rồi,
Dialogue: 0,0:11:58.51,0:12:00.14,Default,,0,0,0,,phải giải quyết cho xong.
Dialogue: 0,0:12:01.05,0:12:02.51,Default,,0,0,0,,Không, nhưng…
Dialogue: 0,0:12:02.60,0:12:03.97,Default,,0,0,0,,Nhưng…
Dialogue: 0,0:12:06.81,0:12:07.81,Default,,0,0,0,,Ừ.
Dialogue: 0,0:12:21.12,0:12:23.66,Default,,0,0,0,,Vậy thì…
Dialogue: 0,0:12:28.17,0:12:32.13,Default,,0,0,0,,Vậy thì mình mong\Ncậu có thể nghe lời này của mình.
Dialogue: 0,0:12:42.35,0:12:43.18,Default,,0,0,0,,{\i1}Giờ này…{\i0}
Dialogue: 0,0:12:44.35,0:12:47.06,Default,,0,0,0,,{\i1}Có lẽ mặt mình trông không ra làm sao.{\i0}
Dialogue: 0,0:12:47.77,0:12:49.35,Default,,0,0,0,,{\i1}Cũng đương nhiên thôi.{\i0}
Dialogue: 0,0:12:50.15,0:12:52.36,Default,,0,0,0,,{\i1}Suy cho cùng mình có thể bị ghét,{\i0}
Dialogue: 0,0:12:52.44,0:12:55.44,Default,,0,0,0,,{\i1}cũng có thể làm hỏng\Nmối quan hệ hiện tại này.{\i0}
Dialogue: 0,0:12:56.44,0:12:58.53,Default,,0,0,0,,{\i1}Trong lòng bất an quá đi.{\i0}
Dialogue: 0,0:13:02.16,0:13:03.99,Default,,0,0,0,,{\i1}Nhưng… Nếu là bây giờ…{\i0}
Dialogue: 0,0:13:04.83,0:13:08.04,Default,,0,0,0,,{\i1}Nhân lúc Mie không nhìn rõ\Nvẻ mặt của mình…{\i0}
Dialogue: 0,0:13:10.79,0:13:11.96,Default,,0,0,0,,{\i1}có lẽ…{\i0}
Dialogue: 0,0:13:13.08,0:13:14.96,Default,,0,0,0,,{\i1}mình có thể bày tỏ lòng mình với cô ấy.{\i0}
Dialogue: 0,0:13:26.26,0:13:28.10,Default,,0,0,0,,Mình…
Dialogue: 0,0:13:30.60,0:13:31.81,Default,,0,0,0,,thích…
Dialogue: 0,0:13:42.57,0:13:43.49,Default,,0,0,0,,Vẫn chưa xong à?
Dialogue: 0,0:13:48.41,0:13:49.33,Default,,0,0,0,,Xin lỗi.
Dialogue: 0,0:13:50.46,0:13:52.21,Default,,0,0,0,,Mình không nói ra nổi.
Dialogue: 0,0:13:53.46,0:13:55.63,Default,,0,0,0,,Đúng là nên quên đi thì hơn.
Dialogue: 0,0:13:55.71,0:13:58.88,Default,,0,0,0,,Cảm giác giờ không phải là\Nlúc nói ra chuyện này.
Dialogue: 0,0:14:00.01,0:14:01.76,Default,,0,0,0,,Chắc ý cậu là muốn đi vệ sinh?
Dialogue: 0,0:14:02.63,0:14:03.93,Default,,0,0,0,,Không phải.
Dialogue: 0,0:14:04.01,0:14:05.89,Default,,0,0,0,,Để lần sau mình sẽ nói cho cậu biết.
Dialogue: 0,0:14:06.56,0:14:10.60,Default,,0,0,0,,Chờ đến lúc Mie có thể nhìn rõ\Nvẻ mặt của mình, mình sẽ nói cho cậu biết.
Dialogue: 0,0:14:14.77,0:14:15.86,Default,,0,0,0,,Vậy sao?
Dialogue: 0,0:14:15.94,0:14:19.19,Default,,0,0,0,,Vậy thì mình phải chú ý hơn,\Nphải nhớ đeo kính mới được.
Dialogue: 0,0:14:25.16,0:14:29.74,Default,,0,0,0,,Có điều, tốt hơn là\Nđợi mình chuẩn bị tâm lý xong rồi sẽ nói.
Dialogue: 0,0:14:29.83,0:14:30.83,Default,,0,0,0,,Mình biết rồi.
Dialogue: 0,0:14:30.91,0:14:31.83,Default,,0,0,0,,Mình sẽ đợi cậu.
Dialogue: 0,0:14:32.83,0:14:37.79,Default,,0,0,0,,{\i1}Lẽ… lẽ nào cô ấy đã đoán ra được\Nmình muốn nói chuyện gì sao?{\i0}
Dialogue: 0,0:14:41.59,0:14:42.51,Default,,0,0,0,,Tìm ra sô-cô-la rồi.
Dialogue: 0,0:14:43.63,0:14:45.64,Default,,0,0,0,,Dù chỉ là đồ ăn vặt của mình.
Dialogue: 0,0:14:45.72,0:14:47.64,Default,,0,0,0,,Cầm đi, sô-cô-la tình bạn.
Dialogue: 0,0:14:49.06,0:14:50.27,Default,,0,0,0,,Sô cô la tình bạn.
Dialogue: 0,0:14:50.93,0:14:53.39,Default,,0,0,0,,{\i1}Xem ra cô ấy chưa phát hiện ra.{\i0}
Dialogue: 0,0:14:54.98,0:14:57.81,Default,,0,0,0,,Có vẻ là chuyện rất khó nói ra,
Dialogue: 0,0:14:57.90,0:14:59.48,Default,,0,0,0,,cậu cứ từ từ cũng được.
Dialogue: 0,0:14:59.57,0:15:00.40,Default,,0,0,0,,Ừ.
Dialogue: 0,0:15:01.19,0:15:02.57,Default,,0,0,0,,{\i1}Năm sau nhất định…{\i0}
Dialogue: 0,0:15:05.24,0:15:06.82,Default,,0,0,0,,{\i1}Trước năm sau nhất định…{\i0}
Dialogue: 0,0:15:22.05,0:15:24.47,Default,,0,0,0,,{\i1}Chào buổi sáng.{\i0}
Dialogue: 0,0:15:24.55,0:15:27.43,Default,,0,0,0,,NĂM 2, LỚP B
Dialogue: 0,0:15:28.93,0:15:31.47,Default,,0,0,0,,{\i1}Một tháng sau ngày Lễ Tình Nhân.{\i0}
Dialogue: 0,0:15:35.02,0:15:37.35,Default,,0,0,0,,{\i1}Hôm nay được gọi là Lễ Tình Nhân trắng.{\i0}
Dialogue: 0,0:15:39.11,0:15:40.82,Default,,0,0,0,,{\i1}Chắc cô ấy không thấy kỳ cục đâu nhỉ?{\i0}
Dialogue: 0,0:15:41.40,0:15:43.32,Default,,0,0,0,,{\i1}Đây là quà đáp lễ thôi mà.{\i0}
Dialogue: 0,0:15:43.40,0:15:44.82,Default,,0,0,0,,{\i1}Có sao đâu chứ?{\i0}
Dialogue: 0,0:15:46.40,0:15:48.24,Default,,0,0,0,,Mie, chào…
Dialogue: 0,0:15:51.83,0:15:52.87,Default,,0,0,0,,buổi sáng.
Dialogue: 0,0:15:52.95,0:15:54.33,Default,,0,0,0,,Chào buổi sáng…
Dialogue: 0,0:15:54.83,0:15:56.71,Default,,0,0,0,,Cậu… cậu làm sao vậy?
Dialogue: 0,0:15:56.79,0:15:58.29,Default,,0,0,0,,Sắc mặt cậu có vẻ không tốt.
Dialogue: 0,0:15:58.38,0:16:01.13,Default,,0,0,0,,Chắc là vì mình nhịn\Nkhông uống ca cao nóng vào buổi sáng.
Dialogue: 0,0:16:01.80,0:16:02.80,Default,,0,0,0,,Vậy sao?
Dialogue: 0,0:16:04.26,0:16:06.26,Default,,0,0,0,,Mình lại quên đeo kính rồi.
Dialogue: 0,0:16:06.84,0:16:09.26,Default,,0,0,0,,{\i1}Phản ứng cũng chậm một nhịp.{\i0}
Dialogue: 0,0:16:09.84,0:16:13.01,Default,,0,0,0,,Lần trước lúc Lễ Tình Nhân đó.
Dialogue: 0,0:16:15.10,0:16:18.48,Default,,0,0,0,,Mình đã nhận được\Nrất nhiều sô-cô-la tình bạn.
Dialogue: 0,0:16:19.85,0:16:23.11,Default,,0,0,0,,{\i1}Thế nên mình ăn hết.{\i0}
Dialogue: 0,0:16:23.19,0:16:24.28,Default,,0,0,0,,{\i1}Sau đó thì…{\i0}
Dialogue: 0,0:16:24.36,0:16:27.86,Default,,0,0,0,,Thời gian này\Nmình phải tạm thời nhịn ăn đồ ăn vặt.
Dialogue: 0,0:16:31.87,0:16:35.29,Default,,0,0,0,,Bởi vậy mình muốn nhờ Komura giúp.
Dialogue: 0,0:16:36.87,0:16:40.54,Default,,0,0,0,,Nếu mình nhịn không nổi, bắt đầu ăn nhiều,
Dialogue: 0,0:16:40.63,0:16:43.21,Default,,0,0,0,,mong Komura có thể\Nđích thân ra tay cản mình.
Dialogue: 0,0:16:43.29,0:16:45.30,Default,,0,0,0,,{\i1}Lâu rồi mới nghe\Ngiọng điệu của samurai này.{\i0}
Dialogue: 0,0:16:45.88,0:16:47.26,Default,,0,0,0,,Mình… mình biết rồi.
Dialogue: 0,0:16:47.80,0:16:49.18,Default,,0,0,0,,Mình sẽ giúp cậu.
Dialogue: 0,0:16:49.26,0:16:50.43,Default,,0,0,0,,Cảm ơn cậu.
Dialogue: 0,0:16:52.64,0:16:53.72,Default,,0,0,0,,{\i1}Xem ra{\i0}
Dialogue: 0,0:16:54.64,0:16:56.93,Default,,0,0,0,,{\i1}món này không tặng nổi rồi.{\i0}
Dialogue: 0,0:16:57.64,0:16:58.89,Default,,0,0,0,,Chào buổi sáng, Mie.
Dialogue: 0,0:16:59.64,0:17:00.60,Default,,0,0,0,,Azuma.
Dialogue: 0,0:17:01.23,0:17:03.31,Default,,0,0,0,,Mie, xòe tay ra đi.
Dialogue: 0,0:17:05.28,0:17:07.86,Default,,0,0,0,,Đây, cậu nhận đi.
Dialogue: 0,0:17:09.03,0:17:09.90,Default,,0,0,0,,{\i1}Làm gì vậy?{\i0}
Dialogue: 0,0:17:10.49,0:17:12.95,Default,,0,0,0,,Hôm Lễ Tình Nhân\Ncậu tặng mình sô-cô-la tình bạn mà.
Dialogue: 0,0:17:13.03,0:17:14.33,Default,,0,0,0,,Đây là quà đáp lễ.
Dialogue: 0,0:17:16.95,0:17:19.83,Default,,0,0,0,,{\i1}Không dùng thị giác\Nmà dùng khứu giác ngửi trước.{\i0}
Dialogue: 0,0:17:19.91,0:17:21.92,Default,,0,0,0,,Đáp… đáp lễ?
Dialogue: 0,0:17:22.00,0:17:23.84,Default,,0,0,0,,Phải, hôm nay là Lễ Tình Nhân trắng.
Dialogue: 0,0:17:23.92,0:17:26.42,Default,,0,0,0,,Vì Mie đã tặng rất nhiều sô-cô-la,
Dialogue: 0,0:17:26.50,0:17:29.34,Default,,0,0,0,,nên chắc cũng sẽ nhận lại\Nrất nhiều quà đáp lễ.
Dialogue: 0,0:17:29.42,0:17:31.93,Default,,0,0,0,,Rất nhiều đồ ăn vặt…
Dialogue: 0,0:17:32.01,0:17:33.51,Default,,0,0,0,,{\i1}Cô ấy tuyệt vọng rồi.{\i0}
Dialogue: 0,0:17:34.18,0:17:36.35,Default,,0,0,0,,{\i1}Cậu… Cậu gian xảo quá đi, Azuma.{\i0}
Dialogue: 0,0:17:37.14,0:17:39.52,Default,,0,0,0,,{\i1}Mình cũng muốn tặng!{\i0}
Dialogue: 0,0:17:40.35,0:17:41.35,Default,,0,0,0,,Thơm quá.
Dialogue: 0,0:17:41.44,0:17:43.27,Default,,0,0,0,,Đành phải dùng đến vũ khí cuối cùng vậy.
Dialogue: 0,0:17:43.86,0:17:46.27,Default,,0,0,0,,Dùng kẹo ngâm ho để phân tán sự chú ý.
Dialogue: 0,0:17:47.57,0:17:49.74,Default,,0,0,0,,Mie, cái đó…
Dialogue: 0,0:17:50.24,0:17:52.61,Default,,0,0,0,,Đó là bánh quy cậu vừa nhận lúc nãy!
Dialogue: 0,0:17:54.57,0:17:55.91,Default,,0,0,0,,{\i1}Đây là hành vi vô thức.{\i0}
Dialogue: 0,0:17:55.99,0:17:58.66,Default,,0,0,0,,Không phải, mình nhìn nhầm thôi.
Dialogue: 0,0:17:58.75,0:17:59.87,Default,,0,0,0,,Vì mình không đeo kính.
Dialogue: 0,0:17:59.95,0:18:02.00,Default,,0,0,0,,Ừ, vậy sao?
Dialogue: 0,0:18:02.08,0:18:05.42,Default,,0,0,0,,{\i1}Dù mình thấy\Nvấn đề không chỉ ở mức đó nữa.{\i0}
Dialogue: 0,0:18:11.05,0:18:14.51,Default,,0,0,0,,{\i1}Mie sắp nhịn không nổi nữa rồi.{\i0}
Dialogue: 0,0:18:15.14,0:18:17.39,Default,,0,0,0,,{\i1}Nhưng Mie đã nhờ mình rồi.{\i0}
Dialogue: 0,0:18:17.47,0:18:20.35,Default,,0,0,0,,{\i1}Nếu cô ấy bắt đầu ăn,\Nmình phải ngăn cô ấy.{\i0}
Dialogue: 0,0:18:20.43,0:18:24.19,Default,,0,0,0,,{\i1}Đã nhận lời nhờ vả của cô ấy,\Nmình nhất định phải làm được.{\i0}
Dialogue: 0,0:18:25.56,0:18:28.61,Default,,0,0,0,,Cái gì, chờ đã! Mie, đó là bánh quy!
Dialogue: 0,0:18:28.69,0:18:30.24,Default,,0,0,0,,Không phải kẹo ngậm ho!
Dialogue: 0,0:18:34.86,0:18:36.66,Default,,0,0,0,,Mình còn tưởng là kẹo huýt sáo.
Dialogue: 0,0:18:36.74,0:18:38.24,Default,,0,0,0,,Vì mình không đeo kính.
Dialogue: 0,0:18:38.33,0:18:40.50,Default,,0,0,0,,{\i1}Công nhận hình thù giống nhau thật.{\i0}
Dialogue: 0,0:18:42.04,0:18:44.75,Default,,0,0,0,,{\i1}Sao cảm giác không đúng lắm.{\i0}
Dialogue: 0,0:18:45.75,0:18:47.25,Default,,0,0,0,,Mie.
Dialogue: 0,0:18:48.34,0:18:49.92,Default,,0,0,0,,Đây là quà đáp lễ cho cậu.
Dialogue: 0,0:18:50.67,0:18:51.59,Default,,0,0,0,,Cảm ơn cậu.
Dialogue: 0,0:18:58.89,0:19:02.23,Default,,0,0,0,,Không. Mie, cậu vừa nhìn mình đúng không?
Dialogue: 0,0:19:02.31,0:19:03.81,Default,,0,0,0,,Mình nhìn thấy cả rồi.
Dialogue: 0,0:19:03.89,0:19:05.19,Default,,0,0,0,,Tặng cậu, đây là quà đáp lễ.
Dialogue: 0,0:19:05.81,0:19:08.73,Default,,0,0,0,,Không… không phải. Mình tưởng là…
Dialogue: 0,0:19:09.32,0:19:11.19,Default,,0,0,0,,Tưởng là kẹo ngậm ho.
Dialogue: 0,0:19:11.28,0:19:13.78,Default,,0,0,0,,Kẹo ngậm ho vị đường đen.
Dialogue: 0,0:19:14.36,0:19:16.24,Default,,0,0,0,,Vì mình không đeo kính.
Dialogue: 0,0:19:22.83,0:19:25.08,Default,,0,0,0,,{\i1}Đây… đây là cố ý.{\i0}
Dialogue: 0,0:19:25.83,0:19:26.96,Default,,0,0,0,,{\i1}Mie.{\i0}
Dialogue: 0,0:19:27.04,0:19:29.88,Default,,0,0,0,,{\i1}Không ngờ cậu định dùng chiêu này.{\i0}
Dialogue: 0,0:19:30.42,0:19:31.50,Default,,0,0,0,,{\i1}Dễ thương quá!{\i0}
Dialogue: 0,0:19:32.34,0:19:34.17,Default,,0,0,0,,{\i1}Nhưng… nhưng không được!{\i0}
Dialogue: 0,0:19:34.26,0:19:36.89,Default,,0,0,0,,{\i1}Không được để\NMie làm trái với quyết tâm của cô ấy.{\i0}
Dialogue: 0,0:19:38.55,0:19:41.06,Default,,0,0,0,,{\i1}Mình đành phải nhẫn tâm vậy!{\i0}
Dialogue: 0,0:19:42.64,0:19:46.94,Default,,0,0,0,,Nếu… nếu lại nhìn nhầm nữa thì hỏng mất.
Dialogue: 0,0:19:47.69,0:19:49.86,Default,,0,0,0,,Để mình giữ cho cậu nhé.
Dialogue: 0,0:19:50.40,0:19:51.57,Default,,0,0,0,,Nhưng…
Dialogue: 0,0:19:51.65,0:19:53.32,Default,,0,0,0,,Không, nhưng…
Dialogue: 0,0:19:57.16,0:20:00.41,Default,,0,0,0,,Chờ chút, không được! Mie, cậu phải nhịn!
Dialogue: 0,0:20:00.49,0:20:02.99,Default,,0,0,0,,Một miếng thôi. Chỉ một miếng thôi mà.
Dialogue: 0,0:20:03.08,0:20:04.70,Default,,0,0,0,,Tỉnh táo lên.
Dialogue: 0,0:20:04.79,0:20:07.29,Default,,0,0,0,,Vì cái gì mà cậu phải nhịn\Nuống ca cao nóng buổi sáng?
Dialogue: 0,0:20:07.37,0:20:09.00,Default,,0,0,0,,Nhưng…
Dialogue: 0,0:20:09.08,0:20:12.88,Default,,0,0,0,,nhận quà mà không ăn hết thì thất lễ quá.
Dialogue: 0,0:20:18.09,0:20:19.51,Default,,0,0,0,,GỬI MIE, AZUMA
Dialogue: 0,0:20:21.60,0:20:23.51,Default,,0,0,0,,GỬI MIE, AZUMA
Dialogue: 0,0:20:24.10,0:20:25.89,Default,,0,0,0,,Nếu… nếu định ăn
Dialogue: 0,0:20:25.98,0:20:27.23,Default,,0,0,0,,thì ăn bánh của mình đi!
Dialogue: 0,0:20:42.49,0:20:43.66,Default,,0,0,0,,Cái đó… Không phải…
Dialogue: 0,0:20:43.74,0:20:44.79,Default,,0,0,0,,Lễ Tình Nhân trắng sao?
Dialogue: 0,0:20:49.46,0:20:50.42,Default,,0,0,0,,Ừ.
Dialogue: 0,0:20:51.00,0:20:52.92,Default,,0,0,0,,Cái đó…
Dialogue: 0,0:20:53.00,0:20:55.55,Default,,0,0,0,,Quả nhiên là cậu đừng nên ăn.
Dialogue: 0,0:20:56.26,0:20:58.93,Default,,0,0,0,,Xin lỗi, mình làm cậu thấy khó xử rồi.
Dialogue: 0,0:20:59.01,0:21:00.68,Default,,0,0,0,,{\i1}Muốn biến mất quá.{\i0}
Dialogue: 0,0:21:00.76,0:21:03.43,Default,,0,0,0,,Tốt hơn… để mình đem về.
Dialogue: 0,0:21:10.65,0:21:12.02,Default,,0,0,0,,Mình ăn đây.
Dialogue: 0,0:21:20.36,0:21:22.95,Default,,0,0,0,,Cảm ơn cậu, Komura!
Dialogue: 0,0:21:28.45,0:21:30.96,Default,,0,0,0,,{\i1}Cảm giác vừa thắng vừa thua này…{\i0}
Dialogue: 0,0:21:31.71,0:21:35.96,Default,,0,0,0,,{\i1}khiến tâm trạng Komura rất phức tạp.{\i0}
Dialogue: 0,0:23:10.85,0:23:11.77,Default,,0,0,0,,{\i1}Tôi là Komura Kaede.{\i0}
Dialogue: 0,0:23:11.85,0:23:13.23,Default,,0,0,0,,{\i1}Để tôi giới thiệu tập sau.{\i0}
Dialogue: 0,0:23:13.81,0:23:18.69,Default,,0,0,0,,{\i1}Sau khi Komura và Mie quen nhau,\Ntrong chớp mắt học kỳ mới đã tới.{\i0}
Dialogue: 0,0:23:19.19,0:23:22.99,Default,,0,0,0,,{\i1}Vậy sao, đã lâu vậy rồi sao?\NThời gian trôi qua nhanh thật đó…{\i0}
Dialogue: 0,0:23:23.65,0:23:24.70,Default,,0,0,0,,{\i1}Đổi chỗ ngồi?{\i0}
Dialogue: 0,0:23:24.78,0:23:28.20,Default,,0,0,0,,{\i1}Cũng phải.\NNăm học mới là phải đổi chỗ ngồi mà.{\i0}
Dialogue: 0,0:23:28.28,0:23:31.08,Default,,0,0,0,,{\i1}Mong sẽ lại được ngồi cạnh Mie.{\i0}
Dialogue: 0,0:23:31.66,0:23:34.54,Default,,0,0,0,,{\i1}Tập sau:\N"Đón học kỳ mới cùng cô gái mình thích".{\i0}
Dialogue: 0,0:23:34.62,0:23:37.38,Default,,0,0,0,,{\i1}Ngồi cạnh Mie thì mơ cao xa quá.{\i0}
Dialogue: 0,0:23:37.46,0:23:39.50,Default,,0,0,0,,{\i1}Ngồi gần cô ấy cũng được rồi!{\i0}
